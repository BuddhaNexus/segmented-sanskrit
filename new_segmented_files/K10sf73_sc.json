{
  "K10sf73_sc:hoe0_1": "Pravāraṇasūtra",
  "K10sf73_sc:hoe0_2": "sugata pratibhātu te vāgīśa bhagavān avocat athāyuṣmāṁ vāgīśas tasyāṁ velāyāṁ gāthāṁ babhāṣe ||",
  "K10sf73_sc:hoe1_0": "iha paṁcadaśī viśuddhikā samitā |",
  "K10sf73_sc:hoe1_1": "paṁcaśatāś ca bhikṣavaḥ saṁyojana bandhana |",
  "K10sf73_sc:hoe1_2": "cchidaḥ sarve kṣīṇabhavā maharṣayaḥ ||",
  "K10sf73_sc:hoe2_0": "śuddhā upāsate śuddhaṁ vipramuktapunarbhavā |",
  "K10sf73_sc:hoe2_1": "prahīṇa-jāti-maranāḥ kṛtakṛtyā nirāsravāḥ ||",
  "K10sf73_sc:hoe3_0": "audhatyavicikitsecchā mānagranthabhavacchidaḥ",
  "K10sf73_sc:hoe3_1": "tṛṣṇā-śalyasya hartāro ’cita-tṛṣṇā-punarbhavāḥ ||",
  "K10sf73_sc:hoe4_0": "siṁho ’si nirupādānaṁ prahīṇa-bhaya-bhairava |",
  "K10sf73_sc:hoe4_1": "upadhiṁ samatikrāntaḥ āsravā nihatas tvayā ||",
  "K10sf73_sc:hoe5_0": "cakravarti yathā rājā sacivaiḥ parivāritaḥ |",
  "K10sf73_sc:hoe5_1": "samaṁtād anuśāstīmāṁ sāgarāṁtāṁ vasundharām ||",
  "K10sf73_sc:hoe6_0": "tathā vijīta saṁgrāmaṁ sārthavāham anuttaram |",
  "K10sf73_sc:hoe6_1": "upāsate śravakāstvā traividyā-mṛtyu-hāyina ||",
  "K10sf73_sc:hoe7_0": "putrās te sarva evaite plāvī hy atra na vidyate |",
  "K10sf73_sc:hoe7_1": "hartāraṁ sarva śalyānāṁ vande tvāditya-bāndhavam ||",
  "K10sf73_sc:hoe7_2": "idam avocad bhagavān āptamanasas te bhikṣavo bhagavato bhāṣitam abhyanandaṁ ||",
  "K10sf73_sc:hoe7_3": "pravāraṇa sūtraṁ ||"
}