{
    "T01n870u_001:0": " buddhastotram",
    "T01n870u_001:1": " om namo buddhāya",
    "T01n870u_001:2": " namo'stu buddhāya viśuddhabodhaye",
    "T01n870u_001:3": " viśuddhadharmapratibhāsabuddhaye |",
    "T01n870u_001:4": " saddharmapuṇyopagatānubuddhaye",
    "T01n870u_001:5": " bhavāgraśūnyāya viśuddhabuddhaye || 1 ||",
    "T01n870u_001:6": " aho aho buddhamanantatejasaṃ",
    "T01n870u_001:7": " aho aho sāgaramerugulmam |",
    "T01n870u_001:8": " aho aho buddhamanantagocaram",
    "T01n870u_001:9": " audumbaraṃ puṣpamivātidurlabham || 2 ||",
    "T01n870u_001:10": " aho mahākāruṇikastathāgataḥ",
    "T01n870u_001:11": " aho aho śākyakulasya ketuḥ |",
    "T01n870u_001:12": " aho praṇamyaḥ sa narendrasūryo",
    "T01n870u_001:13": " yenedṛśaṃ bhāṣitasūtramuttamam || 3 ||",
    "T01n870u_001:14": " anugrahārthaṃ sa hi sarvasattvān",
    "T01n870u_001:15": " saddharmacaryāmupadiśya nūnam |",
    "T01n870u_001:16": " śānteśvaraḥ śākyamunistathāgataḥ",
    "T01n870u_001:17": " sattvottamaḥ śāntapuraṃ praviṣṭaḥ || 4 ||",
    "T01n870u_001:18": " gambhīraśāntaṃ virajāsamādhi-",
    "T01n870u_001:19": " padaṃ praviṣṭe jinabuddhagocare |",
    "T01n870u_001:20": " śūnyāśca kāyāstvatha śrāvakāṇāṃ",
    "T01n870u_001:21": " śūnyā vihārā dvipadottamānām || 5 ||",
    "T01n870u_001:22": " te sarvadharmā prakṛtiśca śūnyā",
    "T01n870u_001:23": " sattvā hi śūnyā nahi jātu vidyate || 6 ||",
    "T01n870u_001:24": " nityaṃ ca nityaṃ ca jinaṃ smarāmi",
    "T01n870u_001:25": " nityaṃ ca śocāmi jinasya darśanam |",
    "T01n870u_001:26": " nityaṃ ca nityaṃ praṇidhiṃ karomi",
    "T01n870u_001:27": " saṃbuddhapūjyasya ca darśanārtham || 7 ||",
    "T01n870u_001:28": " sthāpyeha nityaṃ dharaṇīṣu jānu",
    "T01n870u_001:29": " śokābhitapto jinadarśanāya |",
    "T01n870u_001:30": " odantakāruṇyavināyakastva-",
    "T01n870u_001:31": " matīva tṛṣṇā sugatasya darśane || 8 ||",
    "T01n870u_001:32": " satāṃ varo yadvijahāra nityaṃ",
    "T01n870u_001:33": " dadāhi me darśanatoyaśītalam |",
    "T01n870u_001:34": " sattvāḥ satṛṣṇāstava rūpadarśane",
    "T01n870u_001:35": " prahlādayainān karuṇājalena || 9 ||",
    "T01n870u_001:36": " kāruṇyabhāvaṃ kuru nātha nāyaka",
    "T01n870u_001:37": " dadāhi me darśanaṃ saumyarūpam |",
    "T01n870u_001:38": " tvaṃ pāhi trātarjagadekadeśitā",
    "T01n870u_001:39": " śūnyāśca kāyāstvatha śrāvakāṇām || 10 ||",
    "T01n870u_001:40": " ākāśatulyā gaganasvabhāvā",
    "T01n870u_001:41": " māyāmarīcyodakacandrakāyāḥ |",
    "T01n870u_001:42": " sarve ca sattvāḥ sukhitasvabhāvā",
    "T01n870u_001:43": " bhavantu bho nāyaka tvatprasādāt || 11 ||",
    "T01n870u_001:44": " bodhisattvasamuccayānāma kuladevatāviracitaṃ",
    "T01n870u_001:45": " buddhastotraṃ samāptam ||"
}