{
    "T01n854u_001:0": " mañjuśrīstotram",
    "T01n854u_001:1": " śrīmañjunāthakamalāsanaratnamauli-",
    "T01n854u_001:2": " rvidyādhipo bhuvanamaṇḍalacakravartī |",
    "T01n854u_001:3": " dhyānādhipocitavirājitasaumyarūpo",
    "T01n854u_001:4": " vandāmahe suranarāsuravanditāryam || 1 ||",
    "T01n854u_001:5": " bālākṛtiḥ kuvalayojjvalalolahastaḥ",
    "T01n854u_001:6": " keyūrahāramaṇikuṇḍalaghṛṣṭagaṇḍaḥ |",
    "T01n854u_001:7": " khādaṃśca ṣoḍaśaradaṃ sukumārarūpaṃ",
    "T01n854u_001:8": " vandāmahe suravarārcitamañjughoṣam || 2 ||",
    "T01n854u_001:9": " romāgrakūpavivare parivartamānaṃ",
    "T01n854u_001:10": " viśvaprapañcakaraṇaṃ sugatātmajasya |",
    "T01n854u_001:11": " traividyamantra tava nātha guṇārṇaveṇa",
    "T01n854u_001:12": " sūkṣmāya buddhatanayāya namo'stu tasmai || 3 ||",
    "T01n854u_001:13": " gambhīradharmanayamārgasukhapratiṣṭhaṃ",
    "T01n854u_001:14": " jñānodadhiṃ nikhilasattvakṛtārthakāram |",
    "T01n854u_001:15": " prajñānidhānaguṇasāgaramaprameyaṃ",
    "T01n854u_001:16": " mañjuśriyaṃ jinasutaṃ satataṃ namāmi || 4 ||",
    "T01n854u_001:17": " viditasakalatattvaḥ kṣiptasantāpasattva-",
    "T01n854u_001:18": " stribhuvana upakārī sarvaduḥkhāpahārī |",
    "T01n854u_001:19": " madanamathanavīraścārurūpaḥ sucīra-",
    "T01n854u_001:20": " stribhuvanajanatoṣaḥ pātu māṃ mañjughoṣaḥ || 5 ||",
    "T01n854u_001:21": " bālendurucirābhāsaṃ varābharaṇabhūṣitam |",
    "T01n854u_001:22": " prajñābjāmalapatrākṣaṃ vande mañjuśriyaṃ sadā || 6 ||",
    "T01n854u_001:23": " pātraṃ vāmakare yasya bhramannañjalisaṃnibham |",
    "T01n854u_001:24": " nāmnā te sarvato lakṣmīrmañjughoṣaṃ namāmyaham || 7 ||",
    "T01n854u_001:25": " khaḍgapustakahastāya candramaṇḍalavartine |",
    "T01n854u_001:26": " ajñānadhvāntasūryāya mañjughoṣāya te namaḥ || 8 ||",
    "T01n854u_001:27": " jñānottaraprabhāketuṃ praṇidhānamatiṃ tathā |",
    "T01n854u_001:28": " śāntendriyaṃ mañjughoṣaṃ bhaktitaḥ praṇamāmyaham || 9 ||",
    "T01n854u_001:29": " śrī mañjuśrīstavastotraṃ samāptam ||"
}