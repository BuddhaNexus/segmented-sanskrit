{
  "SA06bsa045_u:0": "Gurupañcāśikā",
  "SA06bsa045_u:1": "om namo buddhāya /",
  "SA06bsa045_u:2": "śrīvajrasattvapadavīpratilambhahetornatvā yathāvidhi guroścaraṇāravindam /",
  "SA06bsa045_u:3": "tatparyupāstiramalā bahutantragītā saṃkṣipya kathyata iyaṃ śṛṇutādareṇa // 1 //",
  "SA06bsa045_u:4": "abhiṣekāgralabdho hi vajrācāryastathāgataiḥ /",
  "SA06bsa045_u:5": "daśadiglokadhātusthaistrikālametya vandyate // 2 //",
  "SA06bsa045_u:6": "trikālaṃ parayā bhaktyā sapuṣpāñjalimaṇḍalaiḥ /",
  "SA06bsa045_u:7": "paryupāsyo guruḥ śāstā śirasā pādavandanāt // 3 //",
  "SA06bsa045_u:8": "saddharmādīn puraskṛtya gṛhī vā navako 'pi vā /",
  "SA06bsa045_u:9": "vandyo vratadharairbuddhyā lokāvadyāvahānaye // 4 //",
  "SA06bsa045_u:10": "sukhāsanaṃ samutthānamarthakriyādigauravam /",
  "SA06bsa045_u:11": "sarvameva vratī kuryāt tyaktvā cārcanavandanam // 5 //",
  "SA06bsa045_u:12": "prāk śiṣyācāryasaṃbandhaḥ kāryaḥ parīkṣya sūribhiḥ /",
  "SA06bsa045_u:13": "samānasamayabhraṃśo doṣo hi guruśiṣyayoḥ // 6 //",
  "SA06bsa045_u:14": "niṣkṛpaṃ krodhanaṃ krūraṃ stabdhaṃ laghumasaṃyatam /",
  "SA06bsa045_u:15": "svotkarṣakaṃ ca no kuryād guruṃ śiṣyaṃ ca buddhimān // 7 //",
  "SA06bsa045_u:16": "dhīro vinīto matimān kṣamāvānārjavo 'śaṭhaḥ /",
  "SA06bsa045_u:17": "mantratantraprayogajñaḥ kṛpāluḥ śāstrakovidaḥ // 8 //",
  "SA06bsa045_u:18": "daśatattvaparijñātā maṇḍalālekhyakarmavit /",
  "SA06bsa045_u:19": "mantravyākhyākṛdācāryaḥ prasannaḥ syājjitendriyaḥ // 9 //",
  "SA06bsa045_u:20": "taṃ nāthaṃ yo 'vamanyeta śiṣyo bhūtvā sacetanaḥ /",
  "SA06bsa045_u:21": "sarvabuddhāpamānena sa nityaṃ duḥkhamāpnuyāt // 10 //",
  "SA06bsa045_u:22": "ītyupadravacauraiśca grahajvaraviṣādibhiḥ /",
  "SA06bsa045_u:23": "mriyate 'sau mahāmūḍho gurupādābhinindakaḥ // 11 //",
  "SA06bsa045_u:24": "rājavātānalavyālairḍākinījalataskaraiḥ /",
  "SA06bsa045_u:25": "vighnairvināyakaiścāpi mārito narakaṃ vrajet // 12 //",
  "SA06bsa045_u:26": "na kuryāccittasaṃkṣobhamācāryasya kadācana /",
  "SA06bsa045_u:27": "yadā karoti duṣprajño narake pacyate dhruvam // 13 //",
  "SA06bsa045_u:28": "narakā ye samākhyātā avīcyādyā bhayānakāḥ /",
  "SA06bsa045_u:29": "tatra vāsaḥ samākhyāta ācāryasya hi nindanāt // 14 //",
  "SA06bsa045_u:30": "tasmāt sarvaprayatnena vajrācāryaṃ mahāgurum /",
  "SA06bsa045_u:31": "pracchannavarakalyāṇaṃ nāvamanyet kadācana // 15 //",
  "SA06bsa045_u:32": "yatheṣṭadakṣiṇādānād gurubhaktaṃ sagauravam /",
  "SA06bsa045_u:33": "uktā jvarādayastāpā na bhūyaḥ prabhavanti hi // 16 //",
  "SA06bsa045_u:34": "adeyaiḥ putradārādyairasubhirvā nijairapi /",
  "SA06bsa045_u:35": "sevyaḥ svasaṃvarācārya kiṃ punarvibhavaiścalaiḥ // 17 //",
  "SA06bsa045_u:36": "yataḥ sudurlabhaṃ vastu kalpāsaṃkhyeyakoṭibhiḥ /",
  "SA06bsa045_u:37": "buddhatvamudyogavate dadātīhaiva janmani // 18 //",
  "SA06bsa045_u:38": "nityaṃ svasamayaḥ sādhyo nityaṃ pūjyāstathāgatāḥ /",
  "SA06bsa045_u:39": "nityaṃ ca gurave deyaṃ sarvabuddhasamo hyasau // 19 //",
  "SA06bsa045_u:40": "yadyadiṣṭataraṃ loke viśiṣṭarameva vā /",
  "SA06bsa045_u:41": "tattaddhi gurave deyaṃ sadaivākṣayamicchatā // 20 //",
  "SA06bsa045_u:42": "datte 'smai sarvabuddhebhyo dattaṃ bhavati śāśvatam /",
  "SA06bsa045_u:43": "tasmācca puṇyasaṃbhāraḥ saṃbhārād bodhiruttamā // 21 //",
  "SA06bsa045_u:44": "te śiṣyāḥ karuṇotsargaśīlakṣāntiguṇānvitāḥ /",
  "SA06bsa045_u:45": "ye nānyatvaṃ kalpayanti gurorvajradharasya ca // 22 //",
  "SA06bsa045_u:46": "caityabhaṅgādibhītyāpi gurośchāyāṃ na laṅghayet /",
  "SA06bsa045_u:47": "pādukāsanayānāderlaṅghanasya tu kā kathā // 23 //",
  "SA06bsa045_u:48": "śrūyād yatnād gurorājñāṃ hṛṣṭacitto mahāmatiḥ /",
  "SA06bsa045_u:49": "aśaktaḥ śrāvayet tasmā upapattyā tvaśaktitām // 24 //",
  "SA06bsa045_u:50": "guroḥ siddhiṃ samāpnoti guroḥ svargaṃ guroḥ sukham /",
  "SA06bsa045_u:51": "tasmāt sarvaprayatnena gurorājñāṃ na laṅghayet // 25 //",
  "SA06bsa045_u:52": "svātmavacca gurordravyaṃ guruvacca tadaṅganām /",
  "SA06bsa045_u:53": "svajanāniva tallokān paśyennityaṃ samāhitaḥ // 26 //",
  "SA06bsa045_u:54": "śayyārohamagrayānamuṣṇīṣādyupabandhanam /",
  "SA06bsa045_u:55": "na kuryādāsane pādaṃ kaṭihastaṃ ca sannidhau // 27 //",
  "SA06bsa045_u:56": "suptena vā niṣaṇṇena na stheyamutthite gurau /",
  "SA06bsa045_u:57": "dakṣaścotsāhasampannastatkāryeṣu sadā bhavet // 28 //",
  "SA06bsa045_u:58": "śleṣmādīnāṃ parityāgaḥ pādaprasāraṇaṃ tathā /",
  "SA06bsa045_u:59": "caṅkramaṇaṃ vivādaṃ ca na kuryāt purato guroḥ // 29 //",
  "SA06bsa045_u:60": "saṃvāhanaṃ nartanaṃ ca na gānaṃ na ca bādanam /",
  "SA06bsa045_u:61": "bahu saṃlapanaṃ cāpi na kuryāt purato guroḥ // 30 //",
  "SA06bsa045_u:62": "natvāsanāt samuttheyaṃ niṣattavyaṃ ca bhaktitaḥ /",
  "SA06bsa045_u:63": "niśyapsu sabhaye mārge prārthyāgre gamanaṃ caret // 31 //",
  "SA06bsa045_u:64": "nāṅgāni cālayed dhīmān na jṛmbhādi samāśrayet /",
  "SA06bsa045_u:65": "nāṅgulisphoṭanaṃ kuryāt puraḥ paśyati śāstari // 32 //",
  "SA06bsa045_u:66": "pādayoḥ kṣālanaṃ cāṅgaproñchābhyañjanamardanam /",
  "SA06bsa045_u:67": "pūrvaṃ praṇamya kartavyaṃ tataḥ kuryād yadādiśet // 33 //",
  "SA06bsa045_u:68": "[āvhānādau gurornāmni pūjyapādādi yojayet /",
  "SA06bsa045_u:69": "anyadā śraddhayā brūyāt sādaraistu viśeṣaṇaiḥ // 34 //",
  "SA06bsa045_u:70": "ādiśyatām, kariṣyāmi,",
  "SA06bsa045_u:71": "pravadet sāñjalirgurum /",
  "SA06bsa045_u:72": "śrutvādeśaṃ cāvicālya yathādiṣṭaṃ tathā caret // 35 //",
  "SA06bsa045_u:73": "hāse kāse samutpanne kareṇācchādayenmukham /",
  "SA06bsa045_u:74": "tadante mṛdubhirvarṇaiḥ svābhiprāyaṃ nivedayet // 36 //",
  "SA06bsa045_u:75": "vinītaḥ purato bhūyāt sajjo vastrādibandhanaiḥ /",
  "SA06bsa045_u:76": "bhūjānuḥ sāñjaliḥ śrotuṃ yācayet tu trivārakam // 37 //",
  "SA06bsa045_u:77": "satkāryaṃ sarvadā kuryānnirahaṅkāracetasā /",
  "SA06bsa045_u:78": "trapayā pāpabhītyā saṃvṛto navavadhūriva // 38 //",
  "SA06bsa045_u:79": "na vilāsamayīṃ ceṣṭāṃ kuryāt śāstari saṃmukhe /",
  "SA06bsa045_u:80": "anyaccaivaṃvidhaṃ karma suparīkṣya tyajed bhṛśam // 39 //",
  "SA06bsa045_u:81": "pratiṣṭhāyāṃ maṇḍale ca home vā śiṣyasaṃgrahe /",
  "SA06bsa045_u:82": "ākhyānādau gurorvāse nityaṃ kuryācca sannidhim // 40 //",
  "SA06bsa045_u:83": "pratiṣṭhādau labhyate yat tatsarvaṃ gurave 'rpayet /",
  "SA06bsa045_u:84": "tena dattaṃ ca gṛṇhīyāt svayaṃ cānyāṃśca toṣayet // 41 //",
  "SA06bsa045_u:85": "guruśiṣye svaśiṣyatvaṃ na vidadhyāt kadācan /",
  "SA06bsa045_u:86": "svaśiṣyaṃ vyāvṛtaṃ kuryāt satkārāderguroḥ puraḥ // 42 //",
  "SA06bsa045_u:87": "ācāryo yatsvayaṃ dadyād gururvā yat pradāpayet /",
  "SA06bsa045_u:88": "praṇamya dhīmatā grāhyaṃ baddhāñjalipuṭena tat // 43 //",
  "SA06bsa045_u:89": "avismṛtaḥ sarvacaryāṃ yatnāt kurvan svabāndhavān /",
  "SA06bsa045_u:90": "avismṛternirākuryāt premṇā hṛṣṭena cetasā // 44 //",
  "SA06bsa045_u:91": "anujñāto guroḥ kāryaṃ śraddhālurnācared yadi /",
  "SA06bsa045_u:92": "rugṇastu kuśale citte naivaṃ bhavati pāpabhāk // 45 //",
  "SA06bsa045_u:93": "kimanyad, gurutoṣāya yacchakyaṃ tatsamācaret /",
  "SA06bsa045_u:94": "caryā kāryā prayatnena na kadāpyavahelayet // 46 //",
  "SA06bsa045_u:95": "sarvathā sarvadā siddhirācārya yānugāminī /",
  "SA06bsa045_u:96": "gururvajradharasyokterārādhyaḥ sarvavastubhiḥ // 47 //",
  "SA06bsa045_u:97": "śiṣyaḥ śuddhāśayo bhūtvā triratnaṃ śaraṇaṃ vrajet /",
  "SA06bsa045_u:98": "guroradhītyānupaṭhet kuryādutsargameva ca // 48 //",
  "SA06bsa045_u:99": "tato mantrādidānena kṛtvā saddharmapātrakam /",
  "SA06bsa045_u:100": "paṭhecca dhārayeccāpi mūlāpattīścaturdaśa // 49 //",
  "SA06bsa045_u:101": "gurumanugataśiṣyasyānavadyasya kṛtvā sakalasuhitavṛddhiṃ saṃcitaṃ yanmayedam /",
  "SA06bsa045_u:102": "kuśalapadamanantaṃ tena vai sarvasatvāḥ vijitasugatabhāvā drāk susiddhiṃ labheyuḥ // 50 //",
  "SA06bsa045_u:103": "// iti gurupañcāśikā samāptā //",
  "SA06bsa045_u:104": "// kṛtiriyaṃ mahācāryāśvaghoṣasya //"
}