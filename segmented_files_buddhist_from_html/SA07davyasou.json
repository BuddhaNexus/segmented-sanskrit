{
  "SA07davyasou:0": "śrī siddhārthaḥ kapilanagare bodhisattvaḥ saputrāṃ",
  "SA07davyasou:1": "devīṃ tyaktvā sakalavibhavaṃ cakravartiśriyaṃ ca /",
  "SA07davyasou:2": "māsy āṣāḍhe viratamanasā pūrṇimāyāṃ niśīthe",
  "SA07davyasou:3": "niścakrāma śramaṇapadabhṛn mokṣam anveṣṭukāmaḥ // Yaśo_1 //",
  "SA07davyasou:4": "atha prabhāte śayanāt samutthitā",
  "SA07davyasou:5": "sutena sārdhaṃ mahiṣī yaśodharā /",
  "SA07davyasou:6": "didṛkṣayā svāmivarasya satvaraṃ",
  "SA07davyasou:7": "gatāvidūre śayanīyamandiram // Yaśo_2 //",
  "SA07davyasou:8": "yathā pure vañcayituṃ sa me patī",
  "SA07davyasou:9": "rahogataḥ kutra cid eva gūḍhavān /",
  "SA07davyasou:10": "vicintya saudhe 'ntarabāhiraṃ bhṛśaṃ",
  "SA07davyasou:11": "parīkṣyamāṇāpi dadarśa naiva tam // Yaśo_3 //",
  "SA07davyasou:12": "dadhāva tasmāt sacivasya mandiraṃ",
  "SA07davyasou:13": "gavākṣam udghāṭya drutaṃ drutaṃ śucā /",
  "SA07davyasou:14": "kapāṭam āhatya dṛḍhaṃ muhur muhur",
  "SA07davyasou:15": "vyarīravac channa bhavan bhavann iti // Yaśo_4 //",
  "SA07davyasou:16": "apekṣya kiṃ cit kvaṇam antarād gṛhe",
  "SA07davyasou:17": "vyatiṣṭhatālpaṃ pratihārasannidhau /",
  "SA07davyasou:18": "vicārabhaṅgāc chvasatī ca pāṇinā",
  "SA07davyasou:19": "pratāḍayām āsa kapolayugmakam // Yaśo_5 //",
  "SA07davyasou:20": "tato gatā sā nṛpamandurālayaṃ",
  "SA07davyasou:21": "turaṅgamaṃ nātra dadarśa kanthakam /",
  "SA07davyasou:22": "kuto yayau kiṃ rahasā sa vallabho",
  "SA07davyasou:23": "vitarkayantīti babhūva mūrchitā // Yaśo_6 //",
  "SA07davyasou:24": "vicintya yat kiṃ cid itas tataḥ śiraś",
  "SA07davyasou:25": "cacāla jaghrau ca mukhe sutasya sā /",
  "SA07davyasou:26": "bhujātapatreṇa vilocanadvayān",
  "SA07davyasou:27": "nyavārayat sā sravadaśruśīkaram // Yaśo_7 //",
  "SA07davyasou:28": "aśaknuvantī nitarāṃ samudgamāṃ",
  "SA07davyasou:29": "manovyathāṃ soḍhum udagramanyunā /",
  "SA07davyasou:30": "patipradattaṃ maṇikaṇṭhabhūṣaṇaṃ",
  "SA07davyasou:31": "pravālamālām api kuṇḍaladvayam // Yaśo_8 //",
  "SA07davyasou:32": "lalāṭikāṃ hemamayāṅgulīyakaṃ",
  "SA07davyasou:33": "hiraṇyasūtreṇa nibaddhamekhalām /",
  "SA07davyasou:34": "vimucya śīrṣābharaṇaṃ ca kaṅkaṇe",
  "SA07davyasou:35": "sasarja dhig dhig vadatī sasambhramam // Yaśo_9 //",
  "SA07davyasou:36": "atītaḍat pādatalena bhūtalaṃ",
  "SA07davyasou:37": "jajṛmbha ūrdhvaṃ vicakarṣa mūrdhajam /",
  "SA07davyasou:38": "jajalpa vākyaṃ vigatārtham ākulaṃ",
  "SA07davyasou:39": "rurāva bhīteva ruroda gadgadam // Yaśo_10 //",
  "SA07davyasou:40": "niveśya bālaṃ śayane punaḥ punaḥ",
  "SA07davyasou:41": "samutkṣipantī yugapat karadvayam /",
  "SA07davyasou:42": "vikampya śīrṣaṃ ca yathā vicetanā",
  "SA07davyasou:43": "jughoṣa śaśvāsa papāta vivyathe // Yaśo_11 //",
  "SA07davyasou:44": "nipīḍyamānāpi bubhukṣayāniśaṃ",
  "SA07davyasou:45": "na bhojanaṃ bhoktum iyeṣa kiṃ cana /",
  "SA07davyasou:46": "tṛṣāturā nodakabindum apy asau",
  "SA07davyasou:47": "papau ca kāye 'py babhūva vepathuḥ // Yaśo_12 //",
  "SA07davyasou:48": "nihanyate dhīsmṛtiśaktidhīratā",
  "SA07davyasou:49": "śarīravarṇaṃ balam indriyeṣv api /",
  "SA07davyasou:50": "vinaśyate jīvam anukrameṇa ca",
  "SA07davyasou:51": "durantateyaṃ priyaviprayogatā // Yaśo_13 //",
  "SA07davyasou:52": "niṣadya bhūmyāṃ vinatārdhavigrahā",
  "SA07davyasou:53": "śiraś ca pāṇidvayam aṅkamastake /",
  "SA07davyasou:54": "niveśya kiṃ cit pariṇamya kaṃdharaṃ",
  "SA07davyasou:55": "mamajja cintājaladhāv apāśraye // Yaśo_14 //",
  "SA07davyasou:56": "yaśodharāyā avamānanakriyā",
  "SA07davyasou:57": "asahya siddhārthakumāra ekakaḥ /",
  "SA07davyasou:58": "nivāsam utsṛjya gato nu kānanam",
  "SA07davyasou:59": "iti pravādo 'pi bhaved aho mama // Yaśo_15 //",
  "SA07davyasou:60": "yad asti kāryaṃ triṣu mandireṣu tac",
  "SA07davyasou:61": "cakāra kāryakṣamasevikā yathā /",
  "SA07davyasou:62": "gatau sthitau vā śayane ca vipriyaṃ",
  "SA07davyasou:63": "kadā canāhaṃ na cakāra kiṃ cana // Yaśo_16 //",
  "SA07davyasou:64": "vicintayantī sahasāgatāpadaṃ",
  "SA07davyasou:65": "pragamya devāyatanaṃ priyaṃ prati /",
  "SA07davyasou:66": "sugandhipuspair api dhūmadīpakair",
  "SA07davyasou:67": "apūpujad devagaṇaṃ sagauravam // Yaśo_17 //",
  "SA07davyasou:68": "bhujadvayaṃ mūrdhni niveśya śokinī",
  "SA07davyasou:69": "vilokya devapratimānanaśriyam /",
  "SA07davyasou:70": "praṇamya bhaktyā pariśuddhacetasā",
  "SA07davyasou:71": "yayāca devān iti viprayogataḥ // Yaśo_18 //",
  "SA07davyasou:72": "trilokasargasthitināśahetavaḥ",
  "SA07davyasou:73": "caturmukhaśrīpaticandraśekharāḥ /",
  "SA07davyasou:74": "mahānubhāvā jagadīśvarāḥ surāḥ",
  "SA07davyasou:75": "suduḥkhitāyai śaraṇaṃ bhavantu me // Yaśo_19 //",
  "SA07davyasou:76": "vidhāya yācñām iti devahastayor",
  "SA07davyasou:77": "upāyanīkṛtya babandha kārṣikau /",
  "SA07davyasou:78": "upāharan miṣṭanavāmbupāyasaṃ",
  "SA07davyasou:79": "sitāṃśukaṃ svarṇamayīṃ ca putrikām // Yaśo_20 //",
  "SA07davyasou:80": "pramodam āpādayituṃ sureśvarāṃś",
  "SA07davyasou:81": "cakāra ghaṇṭāninadaṃ ca bhūsurān /",
  "SA07davyasou:82": "ajījapad devagirā ca saṃstavān",
  "SA07davyasou:83": "nanāma bhūmāv asakṛt nipatya sā // Yaśo_21 //",
  "SA07davyasou:84": "pure vane saṃvasathe 'pi vallabho",
  "SA07davyasou:85": "vased dhi kasminn iti divyācakṣuṣā /",
  "SA07davyasou:86": "vilokya gehaṃ vinivartayantu taṃ",
  "SA07davyasou:87": "divaukasaḥ prārthayataiva sā punaḥ // Yaśo_22 //",
  "SA07davyasou:88": "nirīkṣya jihmānimiṣeṇa cakṣuṣā",
  "SA07davyasou:89": "nihatya gāḍhaṃ caraṇaṃ bhuvas tale /",
  "SA07davyasou:90": "muhur muhur daṃśitakomalādharā",
  "SA07davyasou:91": "prakarṣam utkṣipya vikampya tarjanīm // Yaśo_23 //",
  "SA07davyasou:92": "are-tvayāryasya gṛhābhiniṣkramaḥ",
  "SA07davyasou:93": "śruto na dṛṣṭaḥ vada kiṃ nirākulam /",
  "SA07davyasou:94": "iti pratīhārabhaṭaṃ ruṣoccakai",
  "SA07davyasou:95": "raveṇa papraccha sabāṣpalocanā // Yaśo_24 //",
  "SA07davyasou:96": "bhavān sa ārye nṛpavaṃśaśekharo",
  "SA07davyasou:97": "mayā na dṛṣṭaḥ pratihāram āgataḥ /",
  "SA07davyasou:98": "varāṅganābhiḥ saha kelikānane",
  "SA07davyasou:99": "gate niśīthe 'ramateti me śrutam // Yaśo_25 //",
  "SA07davyasou:100": "avītarāgo nanu rājanandano",
  "SA07davyasou:101": "vavāñcha tasmān nanu nūtanapriyām /",
  "SA07davyasou:102": "mithaḥ sa kāṃ cit pariṇīya nāṭikāṃ",
  "SA07davyasou:103": "bahir gato 'ddheti vitarkayāmy aham // Yaśo_26 //",
  "SA07davyasou:104": "purā hi mandhātvabhidho mahāyaśāḥ",
  "SA07davyasou:105": "sa sārvabhaumo 'pi surāṅganāgaṇe /",
  "SA07davyasou:106": "kṛtānurāgo parivarjya mānuṣīṃ",
  "SA07davyasou:107": "śriyaṃ prapede nu divaukasāṃ puram // Yaśo_27 //",
  "SA07davyasou:108": "mano'bhirāmaṃ surasundarīgaṇaṃ",
  "SA07davyasou:109": "vihāya vindhyāvanatāpasāśrame /",
  "SA07davyasou:110": "agastipatnīṃ parirabhya tāpasīṃ",
  "SA07davyasou:111": "lalāsa rantuṃ niśi pākaśāsanaḥ // Yaśo_28 //",
  "SA07davyasou:112": "pratītalaṅkāvijite 'grabhūpatir",
  "SA07davyasou:113": "daśānano daṇḍakakānanaṃ gataḥ /",
  "SA07davyasou:114": "vigṛhya sītāṃ janakātmajām api",
  "SA07davyasou:115": "nijapriyāvad vyadadhāt tadātmasāt // Yaśo_29 //",
  "SA07davyasou:116": "maheśvaraś cāpi purā tapaś carann",
  "SA07davyasou:117": "umāmahiṣyā saha kalikānane /",
  "SA07davyasou:118": "apāsya sātatyasamādhibhāvanaṃ",
  "SA07davyasou:119": "vyarīramac cājanayat sutau nanu // Yaśo_30 //",
  "SA07davyasou:120": "śucākulāṃ sāntvayituṃ vadhūttamām",
  "SA07davyasou:121": "iti pratīhāra uraḥsthale 'ñjalim /",
  "SA07davyasou:122": "vidhāya valgudhvaninānukampayā",
  "SA07davyasou:123": "natena mūrdhnā vacasā vyajijñapat // Yaśo_31 //",
  "SA07davyasou:124": "are-tvam etarhi bhavantam uttamaṃ",
  "SA07davyasou:125": "gṛhe bahir vopavane 'pi kutra cit /",
  "SA07davyasou:126": "aharmukhe kiṃ niśi vā dadarśitha",
  "SA07davyasou:127": "vyapṛcchad itthaṃ nijasevikāṃ ruṣā // Yaśo_32 //",
  "SA07davyasou:128": "nidhāya vāmetarajānumaṇḍalaṃ",
  "SA07davyasou:129": "kṣitau bhujau cāpi lalāṭamastake /",
  "SA07davyasou:130": "natārdhakāyaṃ nijagāda sevikā",
  "SA07davyasou:131": "śrutaṃ ca dṛṣṭaṃ na na vedmi kiṃ cana // Yaśo_33 //",
  "SA07davyasou:132": "ataḥ-paraṃ harmyam upeyuṣī satī",
  "SA07davyasou:133": "pramārjya nisyandajalaṃ vilocane /",
  "SA07davyasou:134": "are-kim āryo 'tra samāgato na vā",
  "SA07davyasou:135": "vyapṛcchad antaḥpurapālapaṇḍakam // Yaśo_34 //",
  "SA07davyasou:136": "praśasyarūpeṇa girā ca valgunā",
  "SA07davyasou:137": "śriyā 'pi dhṛtyā tava kakṣam āgatāḥ /",
  "SA07davyasou:138": "mahottame sarvajanena mānitā",
  "SA07davyasou:139": "bhavanti tasya tritayāḥ priyāṅganāḥ // Yaśo_35 //",
  "SA07davyasou:140": "mano'bhirāmā bhavatī ca bhāratī",
  "SA07davyasou:141": "tathaiva lakṣmīr iti tāḥ priyāṅganāḥ /",
  "SA07davyasou:142": "sadaiva tābhī ramate kumārakaḥ",
  "SA07davyasou:143": "kadā cid anyatra mano 'sya no rajet // Yaśo_36 //",
  "SA07davyasou:144": "jugupsite satpuruṣair manasvibhiḥ",
  "SA07davyasou:145": "sadoṣakāme vimukho nu te patiḥ /",
  "SA07davyasou:146": "tato 'sya śuddhāntagatiḥ kadā cana",
  "SA07davyasou:147": "śrutā na dṛṣṭā na divā vā niśi // Yaśo_37 //",
  "SA07davyasou:148": "tapodhanānāṃ samatām upeyivān",
  "SA07davyasou:149": "ratiṃ na kuryāt sa bhavatraye kva cit /",
  "SA07davyasou:150": "amedhyagehena same 'varodhane",
  "SA07davyasou:151": "kathaṃ vidhatte ratim eṣa te patiḥ // Yaśo_38 //",
  "SA07davyasou:152": "asādhyarogāyatane sukhetare",
  "SA07davyasou:153": "bubhukṣayā nityanipīḍitodare /",
  "SA07davyasou:154": "atarpaṇīye vividhānnapānakaiḥ",
  "SA07davyasou:155": "spṛhāṃ na dehe prakaroti paṇḍitaḥ // Yaśo_39 //",
  "SA07davyasou:156": "vikīrṇagharmodakavipruṣi tvaci",
  "SA07davyasou:157": "vicitravarṇaṃ śamalena saṃskṛte /",
  "SA07davyasou:158": "śarīra ālokya jano vinaśyate",
  "SA07davyasou:159": "pataṅgavad dīpaśikhojjvalaprabhām // Yaśo_40 //",
  "SA07davyasou:160": "tato nṛpāntaḥpurapālakodite",
  "SA07davyasou:161": "kṛtāvadhānā vacane yaśodharā /",
  "SA07davyasou:162": "divaukasāṃ nandanakānanopamaṃ",
  "SA07davyasou:163": "jagāma rājopavanaṃ calātmanā // Yaśo_41 //",
  "SA07davyasou:164": "athābhirāmopavanasya rakṣakaḥ",
  "SA07davyasou:165": "puraḥ pragamyorasi baddhapāṇinā /",
  "SA07davyasou:166": "kimartham ārye 'tra samāgatis tava",
  "SA07davyasou:167": "bhavāmi jijñāsur iti nyavedayat // Yaśo_42 //",
  "SA07davyasou:168": "sakhe mamāryo rahasāruṇodaye",
  "SA07davyasou:169": "samāgato vātra na kiṃ samāgataḥ /",
  "SA07davyasou:170": "kim atra dṛṣṭaḥ sa na vā śrutas tvayā",
  "SA07davyasou:171": "vicintya samyag vada māṃ yathātatham // Yaśo_43 //",
  "SA07davyasou:172": "gataspṛhaḥ pañcasu kāmavastuṣu",
  "SA07davyasou:173": "sa āryaputro vijitendriyo bhavet /",
  "SA07davyasou:174": "tato 'bhirāmopavanaṃ samāgamo",
  "SA07davyasou:175": "na dṛṣṭa ārye na hi vā śruto mayā // Yaśo_44 //",
  "SA07davyasou:176": "vidhitsamāno 'bhyudayaṃ jagattraye",
  "SA07davyasou:177": "divaukasānām adhigamya yācanam /",
  "SA07davyasou:178": "divo 'vatīrṇo nanu puṇyatejasā",
  "SA07davyasou:179": "manuṣyajanmany ajaniṣṭa sa prabhuḥ // Yaśo_45 //",
  "SA07davyasou:180": "mahāmahe saty asitarṣir īyivān",
  "SA07davyasou:181": "divaṃ kim ity asya vimṛśya kāraṇam /",
  "SA07davyasou:182": "svamitraśuddhodanabhūpateḥ suto",
  "SA07davyasou:183": "'janīti harṣāt tam avekṣituṃ yayau // Yaśo_46 //",
  "SA07davyasou:184": "tato 'sitarṣir nṛpasaudham āgataḥ",
  "SA07davyasou:185": "kumārakaṃ vīkṣya sapuṇyasampadam /",
  "SA07davyasou:186": "atīndriyajñānamayena cakṣuṣā",
  "SA07davyasou:187": "parīkṣamāṇo 'sya śarīralakṣaṇam // Yaśo_47 //",
  "SA07davyasou:188": "jagāda vākyaṃ śiśur eṣa puṇyavān",
  "SA07davyasou:189": "bhaved dhi buddho hatamārabandhanaḥ /",
  "SA07davyasou:190": "pratārayet sarvanarāmarāsurān",
  "SA07davyasou:191": "apārasaṃsāramahārṇavād iti // Yaśo_48 //",
  "SA07davyasou:192": "dvijeṣu pañcasv atha dehalakṣaṇaṃ",
  "SA07davyasou:193": "parīkṣya kauṇḍaṇyabudho 'bravīd iti /",
  "SA07davyasou:194": "vinaśya tṛṣṇādimalāny ayaṃ śiśur",
  "SA07davyasou:195": "anuttaraṃ buddhapadaṃ gamiṣyati // Yaśo_49 //",
  "SA07davyasou:196": "tadā prasūtakṣaṇa eva lumbinī-",
  "SA07davyasou:197": "vane sa saptāmbujamūrdhny abhivrajan /",
  "SA07davyasou:198": "abhītanādaṃ nyanadaj jagattraye",
  "SA07davyasou:199": "bhaveyam agras tv iti siṃhapotavat // Yaśo_50 //",
  "SA07davyasou:200": "bhramaddvirephaśrutiramyanisvanaḥ",
  "SA07davyasou:201": "sugandhinaḥ puṣpaparāgarāśinā /",
  "SA07davyasou:202": "taraṃgiṇīśīkaramiśramāruto",
  "SA07davyasou:203": "vavau samantād vipine śanaiḥ tadā // Yaśo_51 //",
  "SA07davyasou:204": "mahātmanas tasya parārdhyajanmani",
  "SA07davyasou:205": "vasuṃdharāyā nidhayaḥ samudgatāḥ /",
  "SA07davyasou:206": "dharāṅganā tarhy atimātramoditā",
  "SA07davyasou:207": "savismayāṃ siddhim adarśayad bhuvi // Yaśo_52 //",
  "SA07davyasou:208": "tataḥ paraṃ lumbinikānanād gṛhaṃ",
  "SA07davyasou:209": "vicitrajāmbūnadabimbasaṃnibham /",
  "SA07davyasou:210": "kumārakaṃ tau pitarau savatsalau",
  "SA07davyasou:211": "sabandhuvargaṃ parivārya ninyatuḥ // Yaśo_53 //",
  "SA07davyasou:212": "gurupradiṣṭaṃ vidhivad gurupriyaḥ",
  "SA07davyasou:213": "samastavidyāsamayaṃ ca darśanam /",
  "SA07davyasou:214": "bhave bhave saṃcitapuṇyatejasā",
  "SA07davyasou:215": "samadhyagīṣṭāciram eṣa buddhimā // Yaśo_54 //",
  "SA07davyasou:216": "śrutena dhṛtyā navayauvanaśriyam",
  "SA07davyasou:217": "upeyuṣo 'syāryasutasya janmanaḥ /",
  "SA07davyasou:218": "saha tvayā ṣoḍaśame hi hāyane",
  "SA07davyasou:219": "vivāhadīkṣāṃ vidhivac cakāra nu // Yaśo_55 //"
}