{
  "SA17bsu059_u:0": "Samyaksambuddhabhāṣitaṃ pratimālakṣaṇam",
  "SA17bsu059_u:1": "namo buddhāya /",
  "SA17bsu059_u:2": "(p. 126)",
  "SA17bsu059_u:3": "evaṃ mayā śrutamekasmin samaye buddho bhagavān jetavane viharati sma /",
  "SA17bsu059_u:4": "tuṣitavarabhavanāt māturdharmadeśanāgamanakālasamaye śāriputro bhagavantametadavocat /",
  "SA17bsu059_u:5": "bhagavan bhagavatā gate parinirvṛte vā śrāddhaiḥ kulaputraiḥkuladuhitṛbhiśca kathaṃ pratipattavyam /",
  "SA17bsu059_u:6": "bhagavānāha - śāriputra/",
  "SA17bsu059_u:7": "mayi gate parinirvṛte vā nyagrodhaparimaṇḍalaṃ kāyaṃ kartavyam /",
  "SA17bsu059_u:8": "yāvatkāyaṃ tāvadvyāmaṃ yāvadvyāmaṃ tāvatkāyaṃ pūjāsatkārārthaṃ pratimā kartavyā /",
  "SA17bsu059_u:9": "sarvāṅgopāṅgāvayavasthaulyalāvaṇyalālityasalīlatvaṃ chatrākāraṃ śiraḥskandhāṃ(dhasu)",
  "SA17bsu059_u:10": "saṃsthitoṣṇīṣatvādisusaṃsthānāt /",
  "SA17bsu059_u:11": "tatrāyāmavistāroccheda(tsedha)",
  "SA17bsu059_u:12": "sandhibandhanirgamaiḥ pramāṇaṃ bodhisattvānāṃ sugatānāñca pravakṣyāmi tacchṛṇu /",
  "SA17bsu059_u:13": "tatra tāvat pramāṇaṃ bodhisattvānāṃ svenāṅgulīpramāṇenaśataṃ viṃśatyuttaram,",
  "SA17bsu059_u:14": "buddhānāṃ pañcaviṃśatyuttaram /",
  "SA17bsu059_u:15": "caturaṅgulamuṣṇīṣaṃ keśasthānaṃ tathaiva ca /",
  "SA17bsu059_u:16": "sārddhatrayodasī(śī)",
  "SA17bsu059_u:17": "mātrā mukhabhāgañca tattrayam // 1 //",
  "SA17bsu059_u:18": "lalāṭaṃ nāsikāñcādhaścibukāntaṃ tṛtīyakam /",
  "SA17bsu059_u:19": "caturaṅgulaṃ lalāṭaṃ ca tulyaṃ nāsikayā bhavet // 2 //",
  "SA17bsu059_u:20": "sādhikaṃ cibukāntaṃ tu cibukaṃ dvayaṅgulaṃ bhavet /",
  "SA17bsu059_u:21": "āyāmaṃ nirgamāccaiva caturaṅgulamiṣyate // 3 //",
  "SA17bsu059_u:22": "caturaṅgulau kapolau tu karṇamūlādviniḥśri(sṛ)tau /",
  "SA17bsu059_u:23": "hanuḥ syāttryaṅgulocchedo(tsedho)",
  "SA17bsu059_u:24": "vistāre dvayaṅgulaśca saḥ // 4 //",
  "SA17bsu059_u:25": "sā 'dhikaḥ paripūrṇṇaḥ syānmahāsiṃhahanuryathā /",
  "SA17bsu059_u:26": "adharo dvayaṅgulāyāmo nirgamoccheda(tsedha)mātrikaḥ // 5 //",
  "SA17bsu059_u:27": "(p. 127)",
  "SA17bsu059_u:28": "madhye syācchobhanā rekhā sṛkkaṇī mātṛke smṛtau /",
  "SA17bsu059_u:29": "caturaṅgulamāyāmaṃ vaktraṃ kuryādvicakṣaṇaḥ // 6 //",
  "SA17bsu059_u:30": "yathopapannasthānāścatvāriṃśaddaśanāḥ smṛtāḥ /",
  "SA17bsu059_u:31": "uttaroṣṭho 'ṅgulārddhaḥ syāttathaiboccheda(tsedha)nirgamaḥ // 7 //",
  "SA17bsu059_u:32": "tribhāgāṅgulikā kāryā godhistasyaiva ca sthitā /",
  "SA17bsu059_u:33": "nāsā dvayaṅgulavistārā sārddhamaṅgulamunnatā // 8 //",
  "SA17bsu059_u:34": "arddhāṅgule same vṛtte nāsāyāḥ śrotasī smṛtau(te) /",
  "SA17bsu059_u:35": "nāsāvaṃśaḥ samo madhye vistāreṇārddhamātrikaḥ // 9 //",
  "SA17bsu059_u:36": "netrāntaro 'ṅgule jñeyo netre ca caturaṅgule /",
  "SA17bsu059_u:37": "vistārāddvayaṅgulau madhye tayostārā tribhāgikī // 10 //",
  "SA17bsu059_u:38": "dṛṣṭiḥ syātpañcabhāgena dvayaṅgulaṃ tryaṅgulaṃ tayoḥ /",
  "SA17bsu059_u:39": "aṅgulasya caturthāṃśo visṛ(stṛ)",
  "SA17bsu059_u:40": "to 'kṣiḥ samudgakaḥ // 11 //",
  "SA17bsu059_u:41": "padmapatrākṛtiḥ kāryo netrakośo 'ṅgulitrayam /",
  "SA17bsu059_u:42": "karavīrasamaṃ sūtraṃ netrayoḥ nāsikāpuṭe // 12 //",
  "SA17bsu059_u:43": "tārā same ca cibuke sṛkkaṇī pariyojayet /",
  "SA17bsu059_u:44": "antarastu bhruvaḥ kāryaṃ vistṛtaṃ sārddhamaṅgulam // 13 //",
  "SA17bsu059_u:45": "madhye corṇātra vijñeyā śubhā pūrṇendusannibhā /",
  "SA17bsu059_u:46": "nāsikāvatsa(vaṃśa)",
  "SA17bsu059_u:47": "sūtrorṇā tathā mūrdhva(rdha)",
  "SA17bsu059_u:48": "jasaṃsthitam // 14 //",
  "SA17bsu059_u:49": "śiromaṇīḥ sa vijñeyaḥ suprabho vimalastathā /",
  "SA17bsu059_u:50": "caturaṅgulamucchedāllalāṭopari mastakam // 15 //",
  "SA17bsu059_u:51": "(p. 128)",
  "SA17bsu059_u:52": "chatrākāraṃ śubhannīlaṃ dakṣiṇāvarttastūrdhvajam /",
  "SA17bsu059_u:53": "bhrurekhā syāccaturmātrā karṇāgraṃ cāpi tatsamam // 16 //",
  "SA17bsu059_u:54": "niḥsṛtau dvayaṅgulau karṇau tayoḥ patrārddhamātrikaḥ /",
  "SA17bsu059_u:55": "ucchedo(tsedho)",
  "SA17bsu059_u:56": "mātriko jñeyaḥ śliṣṭaśrotrārddhamātrikāḥ // 17 //",
  "SA17bsu059_u:57": "aṅgulasya caturthāṃsaḥ(śaḥ)",
  "SA17bsu059_u:58": "karṇāvarttastu vistaraiḥ /",
  "SA17bsu059_u:59": "sārddhamātre 'ṅgule dve syāt karṇastvantarabhāgataḥ // 18 //",
  "SA17bsu059_u:60": "pārśvau syātāṃ yathāśobhaṃ keśāścāpi tathaiva ca /",
  "SA17bsu059_u:61": "arddhapañcamamātrañca karṇapatramapāṅgataḥ // 19 //",
  "SA17bsu059_u:62": "karṇātkarṇāntavijñeyo mastako 'ṣṭādaśāṅgulaḥ /",
  "SA17bsu059_u:63": "caturdaśāṅgulaṃ pṛṣṭhaṃ tayorantaramiṣyate // 20 //",
  "SA17bsu059_u:64": "catvāriṃśanmātrañca śiraḥ syātpariṇāhataḥ /",
  "SA17bsu059_u:65": "grīvocchedā(tsedhā)",
  "SA17bsu059_u:66": "ccaturmātrā vistārādaṣṭamātṛkā // 21 //",
  "SA17bsu059_u:67": "pariṇāhācca kartavyā caturviśatimātṛkā /",
  "SA17bsu059_u:68": "grīvāntānyaṅgulānyaṣṭau skandhāṃso(śo)",
  "SA17bsu059_u:69": "dvādaśāṅgulaḥ // 22 //",
  "SA17bsu059_u:70": "vināntarāṃśo vṛttaśca skandhaḥ syāllakṣaṇānvitaḥ /",
  "SA17bsu059_u:71": "catvāriṃśatamātrāṇi bāhau cāyāmamiṣyate // 23 //",
  "SA17bsu059_u:72": "bāhurviśatimātrastu prabāhuḥ ṣoḍaśastathā /",
  "SA17bsu059_u:73": "dvādaśāṅgulahastāgraṃ maṇibandhātprakīrtitaḥ // 24 //",
  "SA17bsu059_u:74": "kukuṇīmaṇibandhābhyāmaṅgulañcāṅgulaṃ smṛtam /",
  "SA17bsu059_u:75": "bāhau madhyaparikṣepa iṣṭo viṃśatimātṛkaḥ // 25 //",
  "SA17bsu059_u:76": "prabāhuḥ ṣoḍaśaḥśca syāddviṣaṭko maṇibandhane /",
  "SA17bsu059_u:77": "āyāmaṃ saptakaṃ pāṇau talavistārapañcakam // 26 //",
  "SA17bsu059_u:78": "(p. 129)",
  "SA17bsu059_u:79": "śaṅkhañcakraṃ tale nyastaṃ padma cākuliśāṅkuśam /",
  "SA17bsu059_u:80": "sarvalakṣaṇarūpiṇyo le(re)",
  "SA17bsu059_u:81": "khāḥ kāryyāḥ pṛthagvidhāḥ // 27 //",
  "SA17bsu059_u:82": "pañcāṅgulāyatā madhyā parvārddhonā pradeśinī /",
  "SA17bsu059_u:83": "aṅgulārddhavihīnā tu kartavyā syādanāmikā // 28 //",
  "SA17bsu059_u:84": "anāmikātaḥ parvonā kartavyā tu kanīyasī /",
  "SA17bsu059_u:85": "triparvāṅgulayaḥ sarvāḥ parvārddhena nakhāḥśubhāḥ // 29 //",
  "SA17bsu059_u:86": "maṇibandhopariṣṭāttu so 'ṅguṣṭhaścaturaṅgulaḥ /",
  "SA17bsu059_u:87": "tāvāneva parikṣepaḥ parvārddhena nakhaśca saḥ // 30 //",
  "SA17bsu059_u:88": "aṅguṣṭhāttu pradeśinyā antaraṃ tryaṅgulaṃ smṛtam /",
  "SA17bsu059_u:89": "kanīyasī maṇibandhādbhavetpañcāṅgulāyataḥ // 31 //",
  "SA17bsu059_u:90": "agrahastaparikṣepo vijñeyo dvādaśāṅgulaḥ /",
  "SA17bsu059_u:91": "dairghyāttṛtīyabhāgaḥ syāt svāṅgulīnāṃ parigrahaḥ // 32 //",
  "SA17bsu059_u:92": "grīvāhṛdayayormadhye sārddhadvādaśamātrikaḥ /",
  "SA17bsu059_u:93": "hṛnnābhyośca catuścaiva stanayorapi cāntaram // 33 //",
  "SA17bsu059_u:94": "stanayorupariṣṭācca kakṣe kārye ṣaḍaṅgule /",
  "SA17bsu059_u:95": "tadūrdhvaṃ punarāskandhānnavamātrā prakīrtitā // 34 //",
  "SA17bsu059_u:96": "uraso 'pi ca vistāraḥ pañcaviṃśatimātrikaḥ /",
  "SA17bsu059_u:97": "pariṇāhāduraḥ kāryo vistārāttriguṇaṃ śubham // 35 //",
  "SA17bsu059_u:98": "stananābhyantare(raṃ)",
  "SA17bsu059_u:99": "caiva ṣoḍaśāṅgulamiṣyate /",
  "SA17bsu059_u:100": "avedhaḥ sandhirandhrābhyāṃ nābhimaṇḍalamaṅgulam // 36 //",
  "SA17bsu059_u:101": "nābhimadhyāt parikṣepaḥ ṣaṭcatvāriṃśadaṅgulaḥ /",
  "SA17bsu059_u:102": "aṣṭādaśāṅgulaṃ caiva vistāreṇa kaṭirbhavet // 37 //",
  "SA17bsu059_u:103": "(p. 130)",
  "SA17bsu059_u:104": "nābhimeḍhrontarañca syāt sārddhadvādaśamātrikaḥ /",
  "SA17bsu059_u:105": "tadarddhena tu meḍhraḥ syādapānapariṇāhataḥ // 38 //",
  "SA17bsu059_u:106": "pañcamātrāyatau lambau vṛṣaṇau caturaṅgulau /",
  "SA17bsu059_u:107": "pañcamātrāṇi catvāri vistārāyāmatastayoḥ // 39 //",
  "SA17bsu059_u:108": "ūrū samāhitau kāryau pañcaviṃśatimātrikau /",
  "SA17bsu059_u:109": "suvistāraṃ tayormadhyaṃ māpayeddvādaśāṅgulam // 40 //",
  "SA17bsu059_u:110": "pariṇāhe 'pi kartavyaṃ śubhaṃ ṣaṭtriṃśadaṅgulam /",
  "SA17bsu059_u:111": "madhye................caturaṅgulaṃ tu jānutaḥ // 41 //",
  "SA17bsu059_u:112": "sandhibandhaścaturmātrā tridvikaṃ jānugulphakam /",
  "SA17bsu059_u:113": "guḍhagulphaṃ sirāsthitvaṃ sukumārau stayau(?) śubhau // 42 //",
  "SA17bsu059_u:114": "ṛjuvṛttāyate jaṃghā(ghe)",
  "SA17bsu059_u:115": "pañcaviṃśatimātrike /",
  "SA17bsu059_u:116": "tayormadhye pariṇāha ekaviṃśatimātrikaḥ // 43 //",
  "SA17bsu059_u:117": "caturdaśāṅgulā 'yatā gulphāntāścaturaṅgulam /",
  "SA17bsu059_u:118": "gulpho dvādaśakāyāmaḥ pādaḥ pādārddhavistaraḥ // 44 //",
  "SA17bsu059_u:119": "pārśvau dvayaṅgulavistārau pārṣṇī ca caturaṅgule /",
  "SA17bsu059_u:120": "ṣaḍaṅgulaṃ tva(su)",
  "SA17bsu059_u:121": "vistāraṃ triguṇaṃ pariṇāhataḥ // 45 //",
  "SA17bsu059_u:122": "pañcāṅgulyo dviparvāṇi parvārddhena nakhāḥ smṛtāḥ /",
  "SA17bsu059_u:123": "pañcāṅgulaṃ parikṣepādaṅguṣṭhastryaṅgulāyataḥ // 46 //",
  "SA17bsu059_u:124": "aṅguṣṭhakasamā caiva āyāmena pradeśinī /",
  "SA17bsu059_u:125": "ṣoḍaśāṣṭāṣṭabhāgena śeṣā hīnāḥ parasparam // 47 //",
  "SA17bsu059_u:126": "aṅgulyo mātrikocchre(tse)",
  "SA17bsu059_u:127": "dhādaṅguṣṭhaḥ sārddhamātrikaḥ /",
  "SA17bsu059_u:128": "tatra tāmranakhāḥ sārddhāṃ aṅgulāḥ komalāyatāḥ // 48 //",
  "SA17bsu059_u:129": "(p. 131)",
  "SA17bsu059_u:130": "kūrmapṛṣṭhasamau pūrṇau pādau bahiralaṃkṛtau /",
  "SA17bsu059_u:131": "samaśliṣṭānatācchidrau supratiṣṭhataḥ(ṣṭhita) lakṣaṇaiḥ // 49 //",
  "SA17bsu059_u:132": "tayostalaṃ sucakrādicitrākāraṃ tu kārayet /",
  "SA17bsu059_u:133": "pādāvatra praśaṃsanti sarvajñā hatakilviṣāḥ // 50 //",
  "SA17bsu059_u:134": "kukkuṭāṇḍaṃ tilākāraṃ caturasraṃ suvartulam /",
  "SA17bsu059_u:135": "sarvasāmānyaliṅgānāṃ mukhametaccaturvidham // 51 //",
  "SA17bsu059_u:136": "mahānarasurastrīṇāṃ kukkuṭāṇḍaṃ tilākṛtiḥ /",
  "SA17bsu059_u:137": "lāvaṇyaṃ darśanīyaṃ tat kārayet mukhadvayam // 52 //",
  "SA17bsu059_u:138": "pretabhūtapiśācānāṃ rakṣasāṃ vikṛtākṛtiḥ /",
  "SA17bsu059_u:139": "maṇḍalaṃ caturasraṃ ca kārayettu mukhadvayam // 53 //",
  "SA17bsu059_u:140": "samā dṛṣṭiḥ prasannā ca buddhānāmavalokane /",
  "SA17bsu059_u:141": "nādho nordhvaṃ na dainyena saṃyuktaṃ sarvadarśinām // 54 //",
  "SA17bsu059_u:142": "// iti samyaksambuddhabhāṣitaṃ pratimālakṣaṇaṃ samāptam //"
}