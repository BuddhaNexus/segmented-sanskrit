{
  "SA11bsa004_u:0": "namo bodhisattvāya mañjuśriye kumārabhūtāya /",
  "SA11bsa004_u:1": "kālatrayākhilajināṃśca tadīyadharmān saṅghān mahādaratayā praṇipatya cāpi /",
  "SA11bsa004_u:2": "bodhiprabheṇa kathito viśadīkaromi śiṣyottamena khalu bodhipathapradipam // Bpp_1 //",
  "SA11bsa004_u:3": "puruṣāstrividhā jñeyā uttamādhamamadhmāḥ /",
  "SA11bsa004_u:4": "likhyate lakṣaṇaṃ teṣāṃ sphuṭaṃ pratyekabhedataḥ // Bpp_2 //",
  "SA11bsa004_u:5": "upāyena tu kenāpi kevalaṃ saṃsṛteḥ sukham /",
  "SA11bsa004_u:6": "svasyaivārthe ya īheta jñeyaḥ so puruṣo 'dhamaḥ // Bpp_3 //",
  "SA11bsa004_u:7": "pāpakarmanivṛttātmā bhavasukhāt parāṅmukhaḥ /",
  "SA11bsa004_u:8": "ātmanirvāṇamātrārthī yo naro madhyamastu saḥ // Bpp_4 //",
  "SA11bsa004_u:9": "svasantānagatairduḥkhairduḥkhasyānyasya sarvathā /",
  "SA11bsa004_u:10": "sarvasya yaḥ kṣayaṃ kāṅkṣeduttamaḥ puruṣastu saḥ // Bpp_5 //",
  "SA11bsa004_u:11": "kāṅkṣanto hi varāṃ bodhiṃ sattvānāmuttamāstathā /",
  "SA11bsa004_u:12": "darśitān gurubhistebhyaḥ sadupāyāṃ pracakṣmahe // Bpp_6 //",
  "SA11bsa004_u:13": "sambuddhacitramūrtyādistūpasaddharmasammukhaḥ /",
  "SA11bsa004_u:14": "puṣpaidhupaiḥ padārthaiśca yathāprāptaiḥ supūjayet // Bpp_7 //",
  "SA11bsa004_u:15": "samantabhadracaryoktā pūjā saptavidhāpi ca /",
  "SA11bsa004_u:16": "bodhisārasya paryantam avaivartikacittataḥ // Bpp_8 //",
  "SA11bsa004_u:17": "suśraddhayā triratneyaḥ bhumau saṃsthāpya jānunī /",
  "SA11bsa004_u:18": "bhūtvā kṛtāñjaliścāpi triścādau śaraṇaṃ vrajet // Bpp_9 //",
  "SA11bsa004_u:19": "tataḥ samastasattveṣu maitrīcitta puraskṛtaḥ /",
  "SA11bsa004_u:20": "durgatitrayājanmādisaṅkrāntimaraṇādibhiḥ // Bpp_10 //",
  "SA11bsa004_u:21": "dṛṣṭvāśeṣaṃ jagaddukhaṃ duḥkhena dukhitāyāśca /",
  "SA11bsa004_u:22": "duḥkhahetostathā duḥkhāt jagatāṃ muktikāṅkṣayā // Bpp_11 //",
  "SA11bsa004_u:23": "bodhicittaṃ samutpādyamanāpāyipratijñayā /",
  "SA11bsa004_u:24": "evaṃ praṇidhicittānām utpādetu guṇāśca ye // Bpp_12 //",
  "SA11bsa004_u:25": "te gaṇḍavyūhasūtreṣu maitreyeṇa prabhāṣitāḥ /",
  "SA11bsa004_u:26": "sūtrasya tasya paṭhanācchravaṇād gurorvā",
  "SA11bsa004_u:27": "sambodhicittaguṇakāni nirantakāni // Bpp_13 //",
  "SA11bsa004_u:28": "vijñāya tasya khalu saṃsthitārarṇāna /",
  "SA11bsa004_u:29": "cittaṃ tathā samudayeta muhurmuhaśca /",
  "SA11bsa004_u:30": "vīradattaparīpṛcchāsūtre puṇyaṃ pradarśitam // Bpp_14 //",
  "SA11bsa004_u:31": "yattacślokatrayeṇaiva samāsenātralikhyate /",
  "SA11bsa004_u:32": "bodhicittāddhi yatpuṇyaṃ tacca rupi bhavedyadi // Bpp_15 //",
  "SA11bsa004_u:33": "ākāśadhātuṃ sampūrya bhuyaścottari tadbhavet /",
  "SA11bsa004_u:34": "gaṅgāvālikasaṅkhyāni buddhakṣetrāṇi yo naraḥ // Bpp_16 //",
  "SA11bsa004_u:35": "dadyātsadratna pūrṇāni lokanāthebhya eva hi /",
  "SA11bsa004_u:36": "yaścaikaḥ prāñjalirbhūtvā cittaṃ bodhāya nāmayet // Bpp_17 //",
  "SA11bsa004_u:37": "iyaṃ viśeṣyate pūjā yasyānto 'pi na vidyate /",
  "SA11bsa004_u:38": "utpādyabodhipraṇidhānacittaṃ naikaprayatnaiḥ parivardhitavyam // Bpp_18 //",
  "SA11bsa004_u:39": "janmāntare 'pi smaraṇārthamasya śikṣā yathoktā paripālanīyā /",
  "SA11bsa004_u:40": "prasthānacitte svayamātiriktaṃ samyagbhavenna praṇidhānavṛddhiḥ // Bpp_19 //",
  "SA11bsa004_u:41": "sambodhisaṃvāra vivṛddhikāmaḥ tasmād dhruvaṃ cainamavāpnuyāta /",
  "SA11bsa004_u:42": "saptadhāprātimokṣaiśca sadānyasaṃvarānvitaḥ // Bpp_20 //",
  "SA11bsa004_u:43": "bhāgyaṃ bodhisattvānāṃ saṃvarasya na cānyathā /",
  "SA11bsa004_u:44": "saptadhā prātimokṣeṣu bhāṣiteṣu tathāgataiḥ // Bpp_21 //",
  "SA11bsa004_u:45": "brahmacaryaśriyaḥ śreṣṭhāḥ bhikṣusaṃvara iṣyate /",
  "SA11bsa004_u:46": "śīlādhyāyoktavidhinā bodhisattvasya bhumiṣu // Bpp_22 //",
  "SA11bsa004_u:47": "saṃvaraḥ sadgurorgrāhyaḥ samyaglakṣaṇayuktataḥ /",
  "SA11bsa004_u:48": "yaḥ saṃvaravidhau dakṣaḥ svayaṃ ca saṃvare sthitaḥ // Bpp_23 //",
  "SA11bsa004_u:49": "kṛpāluḥ saṃvare śaktaḥ jñātavyaḥ sadgurustu saḥ /",
  "SA11bsa004_u:50": "tatra yatnena na prāpto guruścaitādṛśo yadi // Bpp_24 //",
  "SA11bsa004_u:51": "saṃvaragrahaṇasyānyo vidhiḥ tasmāt samuyacte /",
  "SA11bsa004_u:52": "ambararājabhutena pūrvaṃ mañjuśriyā yathā // Bpp_25 //",
  "SA11bsa004_u:53": "bodhicittaṃ samutpādi suspaṣṭaṃ cātra likhyate /",
  "SA11bsa004_u:54": "mañjuśribuddhakṣetrālaṅkārasūtroktivat tathā // Bpp_26 //",
  "SA11bsa004_u:55": "utpādayāmi sambodhau cittaṃ nāthasya sammukham /",
  "SA11bsa004_u:56": "nimantraye jagatsarvaṃ dāridyānmocitāsmi tat // Bpp_27 //",
  "SA11bsa004_u:57": "vyāpādakhilacittaṃ vā īrṣyāmātsaryameva va /",
  "SA11bsa004_u:58": "adhyāgre na kariṣyāmi bodhiṃ prāpsyāmi yāvatā // Bpp_28 //",
  "SA11bsa004_u:59": "brahmacaryaṃ cariṣyāmi kāmāṃstyakṣyāmi pāpakān /",
  "SA11bsa004_u:60": "buddhānāmānuśikṣiṣye śīlasaṃvara saṃyame // Bpp_29 //",
  "SA11bsa004_u:61": "nāhaṃ tvaritarupeṇa bodhiṃ prāptumihotsahe /",
  "SA11bsa004_u:62": "parāntakoṭiṃ sthāsyāmi sattvasyaikasya kāraṇāt // Bpp_30 //",
  "SA11bsa004_u:63": "kṣetraṃ viśodhiṣyāmi aprameyamacintim /",
  "SA11bsa004_u:64": "nāmadheyaṃ kariṣyāmi daśadikṣu ca viśrutam // Bpp_31 //",
  "SA11bsa004_u:65": "kāyavākkarmaṇī cāhaṃ śodhayiṣyāmi sarvaśaḥ /",
  "SA11bsa004_u:66": "śodhayiṣye manaskarma kartāsmi nāśabham // Bpp_32 //",
  "SA11bsa004_u:67": "svakāyavākacittaviśuddhihetu,",
  "SA11bsa004_u:68": "prasthānacittātmayamasthitena /",
  "SA11bsa004_u:69": "triśīlaśikṣāpariśiyeta cet,",
  "SA11bsa004_u:70": "triśīlaśikṣāsu mahādarasyāt // Bpp_33 //",
  "SA11bsa004_u:71": "śuddhasambodhisattvānāṃ tasmāt saṃvarasaṃvṛtau /",
  "SA11bsa004_u:72": "yatnāt sambodhisambhāraḥ paripūrṇo bhaviṣyati // Bpp_34 //",
  "SA11bsa004_u:73": "puṇyajñānasvabhāvasya sambhārasya tu pūrtaye /",
  "SA11bsa004_u:74": "sarvabuddhamatoheturabhijñotpāda eva hi // Bpp_35 //",
  "SA11bsa004_u:75": "pakṣavṛddhiṃ vinā pakṣī khe noḍaḍetuṃ yathā kṣamaḥ /",
  "SA11bsa004_u:76": "tathābhijñābalairhīnaḥ sattvārthakaraṇe 'kṣamaḥ // Bpp_36 //",
  "SA11bsa004_u:77": "abhijñasya divārātrau yāni puṇyāni santi vai /",
  "SA11bsa004_u:78": "abhijñāyāśca rāhitye naiva janmaśateṣu ca // Bpp_37 //",
  "SA11bsa004_u:79": "śīghraṃ sambodhisambhāraṃ sampūrayitumicchati /",
  "SA11bsa004_u:80": "nirālasyena yatnenābhijñāṃ saṃsādhayettu saṃ // Bpp_38 //",
  "SA11bsa004_u:81": "śamathasiddhayabhāve 'bhijñānaṃ na jāyate /",
  "SA11bsa004_u:82": "ataḥ śamathasiddhayarthaṃ yatitavyaṃ punaḥ punaḥ // Bpp_39 //",
  "SA11bsa004_u:83": "śamathaṅgaprahīṇatve tadyatnairbhāvite 'pi ca /",
  "SA11bsa004_u:84": "saṃvatsarasahasraiśca samādhirnaiva setsyati // Bpp_40 //",
  "SA11bsa004_u:85": "ataḥ samādhisambhārādhyāyoktāṅgasamāśritaḥ /",
  "SA11bsa004_u:86": "kasmiṃścit alambane 'pi puṇye saṃsthāpayenmanaḥ // Bpp_41 //",
  "SA11bsa004_u:87": "yoginaḥ śamathe siddhe 'bhijñānaṃ cāpi setsyati /",
  "SA11bsa004_u:88": "prajñāpāramitāyogaṃ vinā nāvaraṇakṣayaḥ // Bpp_42 //",
  "SA11bsa004_u:89": "kleśajñeyāvṛtestasmāt prahāṇārthamaśeṣataḥ /",
  "SA11bsa004_u:90": "prajñāpāramitāṃ yogī sopāyaṃ bhāvayet sadā // Bpp_43 //",
  "SA11bsa004_u:91": "upāyarahitā prajñāpyupāyaḥ prajñayā vinā /",
  "SA11bsa004_u:92": "yato bandha iti proktau praheyaṃ nobhayaṃ tataḥ // Bpp_44 //",
  "SA11bsa004_u:93": "kā prajñā ka upāyaśca śaṅkāmiti nirāsitum /",
  "SA11bsa004_u:94": "upāyasya ca prajñāyāḥ bhedaḥ samyak prakāśyate // Bpp_45 //",
  "SA11bsa004_u:95": "prajñāpāramitāṃ tyaktvā dānapāramitādayaḥ /",
  "SA11bsa004_u:96": "sarve hi kuśalāḥ dharmāḥ upāyāḥ jinabhāṣitāḥ // Bpp_46 //",
  "SA11bsa004_u:97": "upāyābhyāsavaśyātmā yo hi prajñāṃ vibhāvayet /",
  "SA11bsa004_u:98": "śīghraṃ sa labhate bodhiṃ na nairātmyaikabhāvanāt // Bpp_47 //",
  "SA11bsa004_u:99": "skandhāyatanadhātūnāmanutpādāvabodhinām /",
  "SA11bsa004_u:100": "svabhāvaśūnyatājñānaṃ prajñeti parikīrtitā // Bpp_48 //",
  "SA11bsa004_u:101": "sadutpattirayuktāsti asaccāpi khapuṣpavat /",
  "SA11bsa004_u:102": "dvayordoṣaprasaṅgatvāt udbhāvo na dvayorapi // Bpp_49 //",
  "SA11bsa004_u:103": "anutpannaḥ svato bhāvo parato nobhayorapi /",
  "SA11bsa004_u:104": "ahetuteśca no tasmāt niḥsvabhāvaḥ svarupataḥ // Bpp_50 //",
  "SA11bsa004_u:105": "athavā sarvadharmāṇāṃ caikānekavicāraṇe /",
  "SA11bsa004_u:106": "svarupāprāpyamāṇatvāt niḥsvabhāvatvaniścayaḥ // Bpp_51 //",
  "SA11bsa004_u:107": "śunyatāsaptau yuktau mūlamadhyamakādiṣu /",
  "SA11bsa004_u:108": "siddho bhāvasvabhāvastu śunyatāyāṃ bhāṣitaḥ // Bpp_52 //",
  "SA11bsa004_u:109": "granthasya gauravo yasmāt atra tasmānna vistaraḥ /",
  "SA11bsa004_u:110": "siddhasiddhāntamātraikaṃ bhāvanārthaṃ prabhāṣitam // Bpp_53 //",
  "SA11bsa004_u:111": "tasmādaśeṣadharmāṇāṃ svabhāvanāmalābhataḥ /",
  "SA11bsa004_u:112": "nairātmyabhāvanā yā hi sā prajñāyāstu bhāvanā // Bpp_54 //",
  "SA11bsa004_u:113": "prajñayā sarvadharmaṇāṃ yatsvabhāvo na dṛṣṭavat /",
  "SA11bsa004_u:114": "yuktayā parīkṣya tāṃ prajñāṃ so 'vikalpena bhāvayet // Bpp_55 //",
  "SA11bsa004_u:115": "bhavo vikalpobhūto 'yaṃ tadvikalpātmakastataḥ /",
  "SA11bsa004_u:116": "sarvakalpaparityāgaḥ nivārṇaḥ paramo 'sti hi // Bpp_56 //",
  "SA11bsa004_u:117": "evamapyuktaṃ bhagavatā - -",
  "SA11bsa004_u:118": "mahāvidyā vikalpo hi saṃsārārṇavapātakaḥ /",
  "SA11bsa004_u:119": "nirvikalpasamādhisthe 'vikalpo bhāsate khavat // Bpp_57 //",
  "SA11bsa004_u:120": "avikalpapraveśadhāraṇyāmapi uktam - -",
  "SA11bsa004_u:121": "cintitenirvikalpe 'smin saddharme jinaputrakaiḥ /",
  "SA11bsa004_u:122": "vikalpaṃ durgamaṃ tīrtvāvikalpo prāpsyate kramāt // Bpp_58 //",
  "SA11bsa004_u:123": "niścayīyāgamayuktibhyāṃ svabhāva rahitān tathā /",
  "SA11bsa004_u:124": "sarvān dharmānutpannānavikalpaṃ bhāvayet // Bpp_59 //",
  "SA11bsa004_u:125": "bhāvayannidamevetthaṃ prāpyoṣṇatvādikaṃ kramāt /",
  "SA11bsa004_u:126": "labhate pramuditvādiṃ buddhabodhirna lambitā // Bpp_60 //",
  "SA11bsa004_u:127": "sādhitairmantraśaktayā hi śāntivistarakarmabhiḥ /",
  "SA11bsa004_u:128": "bhadrakumbhādisiddhāṣṭamahāsiddhibalena ca // Bpp_61 //",
  "SA11bsa004_u:129": "abhīṣṭā bodhisambhāraparipūrtiḥ sukhena cet /",
  "SA11bsa004_u:130": "kriyācaryādi tantrokam guhyācaraṇabhiṣyate // Bpp_62 //",
  "SA11bsa004_u:131": "tadācāryabhiṣekārthaṃ mahāratnādidānataḥ /",
  "SA11bsa004_u:132": "sadguruṃ prīṇayed bhaktayā sarvāñjñādipālanaiḥ // Bpp_63 //",
  "SA11bsa004_u:133": "prasanne ca gurau bhūte pūrṇācāryābhiṣekataḥ /",
  "SA11bsa004_u:134": "sarvapāpaviśuddhātmā siddhibhāgī bhaviṣyati // Bpp_64 //",
  "SA11bsa004_u:135": "ādibuddhamahātantre prayatnena niṣedhataḥ /",
  "SA11bsa004_u:136": "guhyaprajñābhiṣekastu na grahyā brahmacārariṇā // Bpp_65 //",
  "SA11bsa004_u:137": "so 'bhiṣeko gṛhītaścet brahyacaryatapaḥ sthitaiḥ /",
  "SA11bsa004_u:138": "niṣiddhācaraṇatvāt tattapaḥ samvarakṣayaḥ // Bpp_66 //",
  "SA11bsa004_u:139": "jāyante vratinastasya pārājikavipattayaḥ /",
  "SA11bsa004_u:140": "saḥ pateddurgatau nūnaṃ siddhirnaiva kadācana // Bpp_67 //",
  "SA11bsa004_u:141": "sarvatantraśrutau bhāṣye homayajñādikarmāsu /",
  "SA11bsa004_u:142": "labdhācāryābhiṣekaśca tattvavida naiva duṣyati // Bpp_68 //",
  "SA11bsa004_u:143": "dīpaṅkaraśriyā bodhipathaḥ proktaḥ samāsataḥ /",
  "SA11bsa004_u:144": "dṛaṣṭvā sūtrādidharmoktiṃ bodhiprabhanivedanāt // Bpp_69 //"
}