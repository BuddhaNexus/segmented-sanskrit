{
  "SA22bsa006_u:0": "Cittaviśuddhiprakaraṇa (Cvp)",
  "SA22bsa006_u:1": "[anādinidhanaṃ śāntaṃ bhāvābhāvavivarjitam /",
  "SA22bsa006_u:2": "nirvikalpaṃ nirālambamanavasthitamadvayam // Cvp_1 //",
  "SA22bsa006_u:3": "adṛṣṭāntamanākhyānamacintyamanidarśanam /",
  "SA22bsa006_u:4": "anāśrayāpratiṣṭhānaṃ nirvikāramasaṃskṛtam // Cvp_2 //",
  "SA22bsa006_u:5": "sarveṣāmāśrayaṃ buddhaṃ karuṇāmayavigraham /",
  "SA22bsa006_u:6": "nānādhimuktasattvānāṃ nānopāyapradarśakam // Cvp_3 //",
  "SA22bsa006_u:7": "mahārāgaṃ namaskṛtya padmanarteśvaraṃ prabhum /",
  "SA22bsa006_u:8": "iha stokaṃ pravakṣyāmi svacittapratyavekṣaṇāt // Cvp_4 //",
  "SA22bsa006_u:9": "yogācārasya nayataḥ sarvameva suniścitam /",
  "SA22bsa006_u:10": "tatsarvamiha vaktavyaṃ tasmādevatsamācaret] // Cvp_5 //",
  "SA22bsa006_u:11": "yena yena hi bandhyante jantavo raudrakarmaṇā /",
  "SA22bsa006_u:12": "sopāyena tu tenaiva mucyante bhavabandhanāt // Cvp_6 //",
  "SA22bsa006_u:13": "[viśuddhereva sattvasya viśuddhaṃ jāyate phalam] /",
  "SA22bsa006_u:14": "mahāyāne suvispaṣṭamuktametatsuvistaram // Cvp_7 //",
  "SA22bsa006_u:15": "dharmapudgalanairātmyaṃ cittamātraṃ jagau muniḥ /",
  "SA22bsa006_u:16": "tato 'pi sarvamutpannamāgamātyanukūlakam // Cvp_8 //",
  "SA22bsa006_u:17": "bhāvagrāhagrahāveśagṛhītānpraticoditaḥ /",
  "SA22bsa006_u:18": "āgame 'pi hi suvyakto vistaraḥ karuṇātmanā // Cvp_9 //",
  "SA22bsa006_u:19": "manaḥpūrvaṅgamā dharmā manaḥśreṣṭhā manojavāḥ /",
  "SA22bsa006_u:20": "manasā hi prasannena bhāṣate vā karoti vā // Cvp_10 //",
  "SA22bsa006_u:21": "svapitā bhikṣuṇā vṛddhaḥ śīghraṃ gaccheti preritaḥ /",
  "SA22bsa006_u:22": "patanācca mṛte tasminnānantaryeṇa yujyate // Cvp_11 //",
  "SA22bsa006_u:23": "sumlānenārhatādioṣṭo maṅgalaṃ paripīḍaya /",
  "SA22bsa006_u:24": "upasthāyakabhikṣuḥ sa mṛte tasminna doṣabhāk // Cvp_12 //",
  "SA22bsa006_u:25": "andhasaṃjñayā nāndhāṃstu mārayandoṣamaśrute /",
  "SA22bsa006_u:26": "ityuktaṃ vinaye vyaktaṃ na doṣo 'duṣṭacetasām // Cvp_13 //",
  "SA22bsa006_u:27": "na stūpakhanane doṣastatsaṃskāradhiyā yataḥ /",
  "SA22bsa006_u:28": "kevalaṃ puṇyarāśiḥ syādupānantaryakāraṇāt // Cvp_14 //",
  "SA22bsa006_u:29": "upānadyugalaṃ dattvā munermūrdhni śubhāśayāt /",
  "SA22bsa006_u:30": "apanīya tathā cāndho rājyaṃ phalamavāpnutaḥ // Cvp_15 //",
  "SA22bsa006_u:31": "tasmādāśayamūlā hi pāpapuṇyavyavasthitiḥ /",
  "SA22bsa006_u:32": "ityuktamāgame yasmānnāpattiḥ śubhacetasām // Cvp_16 //",
  "SA22bsa006_u:33": "svādhidaivatayogātmā jagadarthakvatodyamaḥ /",
  "SA22bsa006_u:34": "bhuñjāno viṣayān yogī mucyate na ca lipyate // Cvp_17 //",
  "SA22bsa006_u:35": "yathaiva viṣatattvajño viṣamālokya bhakṣayan /",
  "SA22bsa006_u:36": "kevalaṃ muhyate nāsau rogamuktaśca jāyate // Cvp_18 //",
  "SA22bsa006_u:37": "māyāmarīcigandharvanagarasvaprasannibham /",
  "SA22bsa006_u:38": "jagatsarvaṃ samālokya kiṃ kathaṃ kena bhujyate // Cvp_19 //",
  "SA22bsa006_u:39": "bālā rajyanti rūpeṣu vairāgyaṃ yānti madhyamāḥ /",
  "SA22bsa006_u:40": "svabhāvajñā vimucyante rūpasyottamabuddhayaḥ // Cvp_20 //",
  "SA22bsa006_u:41": "vicintya samayaṃ sarvaṃ devatāpūjanāvidhim /",
  "SA22bsa006_u:42": "śuddhamālokya niḥśaṅkaṃ bhoktavyaṃ mantracoditam // Cvp_21 //",
  "SA22bsa006_u:43": "śodhyaṃ bodhyaṃ tathā dīpyamakṣaratrayayogataḥ /",
  "SA22bsa006_u:44": "aṅguṣṭhānāmikāgrābhyāṃ prīṇayecca tathāgatān // Cvp_22 //",
  "SA22bsa006_u:45": "yatsatyamiti bālānāṃ tanmithyā khalu yoginām /",
  "SA22bsa006_u:46": "gacchannantamanenaiva na baddho na ca mucyate // Cvp_23 //",
  "SA22bsa006_u:47": "saṃsāraṃ caiva nirvāṇaṃ manyante 'tattvadarśinaḥ /",
  "SA22bsa006_u:48": "na saṃsāraṃ na nirvāṇaṃ manyante 'tattvadarśinaḥ // Cvp_24 //",
  "SA22bsa006_u:49": "vikalpo hi mahāgrāhaḥ saṃsārodadhipātakaḥ /",
  "SA22bsa006_u:50": "avikalpā mahātmāno mucyante bhavabandhanāt // Cvp_25 //",
  "SA22bsa006_u:51": "śaṅkāviṣeṇa bādhyante viṣeṇeva pṛthagjanāḥ /",
  "SA22bsa006_u:52": "tāmevotkhātya nirmūlaṃ vicaretkaruṇātmakaḥ // Cvp_26 //",
  "SA22bsa006_u:53": "yathaiva sphaṭikaḥ svacchaḥ pararāgeṇa rajyate /",
  "SA22bsa006_u:54": "tathaiva cittaratnaṃ tu kalpanārāgarañjitam // Cvp_27 //",
  "SA22bsa006_u:55": "prakṛtyā kalpanārāgairviviktaṃ cittaratnakam /",
  "SA22bsa006_u:56": "ādiśuddhamanutpannaṃ niḥsvabhāvamanāvilam // Cvp_28 //",
  "SA22bsa006_u:57": "tattadyatnena kartavyaṃ yadyadbālairvigarhitam /",
  "SA22bsa006_u:58": "svādhidaivatayogena cittanirmalakāraṇāt // Cvp_29 //",
  "SA22bsa006_u:59": "rāgāgniviṣasaṃmugdhā yogināṃ śubhacetasā /",
  "SA22bsa006_u:60": "kāmitāḥ khalu kāminyaḥ kāmamokṣaphalāvahāḥ // Cvp_30 //",
  "SA22bsa006_u:61": "yathā svagarūḍaṃ dhyātvā viṣamākṛṣya saṃpiban /",
  "SA22bsa006_u:62": "karoti nirviṣaṃ sādhyaṃ na viṣeṇābhibhūyate // Cvp_31 //",
  "SA22bsa006_u:63": "dvādaśayojanavyāsaṃ cakraṃ vai śirasi bhramat /",
  "SA22bsa006_u:64": "bodhicittaṃ samutpādya apanītamiti śrutiḥ // Cvp_32 //",
  "SA22bsa006_u:65": "bodhicittaṃ samutpādya sambodhau kṛtacetasā /",
  "SA22bsa006_u:66": "tatrāsti yanna kartavyaṃ jagadudvaraṇāśayā // Cvp_33 //",
  "SA22bsa006_u:67": "ādiśuddhamanutpannaṃ niḥsvabhāvamanāvilam /",
  "SA22bsa006_u:68": "jagadbhāvena sampaśyanna baddho na ca mucyate // Cvp_34 //",
  "SA22bsa006_u:69": "vicintya vidhivadyogī devatāguṇavistaram /",
  "SA22bsa006_u:70": "rajyate rāgacittena rāgabhogeṇa mucyate // Cvp_35 //",
  "SA22bsa006_u:71": "kiṃ kurmaḥ kutra vai labhyā vicitrā bhāvaśaktayaḥ /",
  "SA22bsa006_u:72": "viṣākrānto yathā kaścidviṣeṇaiva tu nirviṣaḥ // Cvp_36 //",
  "SA22bsa006_u:73": "karṇājjalaṃ jalenaiva kaṇṭakenaiva kaṇṭakam /",
  "SA22bsa006_u:74": "rāgeṇaiva tathārāgamudvaranti maṇīṣiṇaḥ // Cvp_37 //",
  "SA22bsa006_u:75": "yathaiva rajako vastraṃ malenaiva tu nirmalam /",
  "SA22bsa006_u:76": "kuryādvijñastathātmānaṃ malenaiva tu nirmalam // Cvp_38 //",
  "SA22bsa006_u:77": "yathā bhavati saṃśuddho rajonirghṛṣṭadarpaṇaḥ /",
  "SA22bsa006_u:78": "sevitastu tathā vijñairdoṣo doṣavināśanaḥ // Cvp_39 //",
  "SA22bsa006_u:79": "lohapiṇḍo jale kṣipto majjatyeva tu kevalam /",
  "SA22bsa006_u:80": "pātrīkṛto sa evāndhaṃ tārayettarati svayam // Cvp_40 //",
  "SA22bsa006_u:81": "tavdatpātrīkṛtaṃ cittaṃ prajñopāyavidhānataḥ /",
  "SA22bsa006_u:82": "bhuñjāno mucyate kāmo mocayatyaparānapi // Cvp_41 //",
  "SA22bsa006_u:83": "durvijñaiḥ sevitaḥ kāmaḥ kāmo bhavati bandhanam /",
  "SA22bsa006_u:84": "sa eva sevito vijñaiḥ kāmo mokṣaprasādhakaḥ // Cvp_42 //",
  "SA22bsa006_u:85": "prasiddhaṃ sakale loke kṣīraṃ viṣavināśanam /",
  "SA22bsa006_u:86": "tadeva phaṇibhiḥ pītaṃ sutarāṃ viṣavardhanam // Cvp_43 //",
  "SA22bsa006_u:87": "jale kṣīraṃ yathāviṣṭaṃ haṃso pibati paṇḍitaḥ /",
  "SA22bsa006_u:88": "saviṣān viṣāyāṃstadvad bhuktvā muktaśca paṇḍitaḥ // Cvp_44 //",
  "SA22bsa006_u:89": "yathaiva vidhivadbhuktaṃ viṣamapyamṛtāyate /",
  "SA22bsa006_u:90": "durbhuktaṃ ghṛtapūrādi bālānāntu viṣāyate // Cvp_45 //",
  "SA22bsa006_u:91": "idameva hi yaccittaṃ śodhitaṃ hetubhiḥ śubhaiḥ /",
  "SA22bsa006_u:92": "nirvikalpaṃ nirālambaṃ bhāti prakṛtinirmalam // Cvp_46 //",
  "SA22bsa006_u:93": "yathā vahniḥ kṛśopyeṣa tailavartyādisaṃskṛtaḥ /",
  "SA22bsa006_u:94": "dīpo nirmalaniṣkampaḥ sthirastimiranāśanaḥ // Cvp_47 //",
  "SA22bsa006_u:95": "vaṭabījaṃ yathā sūkṣmaṃ sahakārasamanvitam /",
  "SA22bsa006_u:96": "śākhāmūlaphalopetaṃ mahāvṛkṣavidhāyakam // Cvp_48 //",
  "SA22bsa006_u:97": "haridrācūrṇasaṃyogādvarṇāntaramiti smṛtam /",
  "SA22bsa006_u:98": "prajñopāyasamāyogāddharmadhātuṃ tathā viduḥ // Cvp_49 //",
  "SA22bsa006_u:99": "ghṛtaṃ ca madhusaṃyuktaṃ samāṃśaṃ viṣatāṃ vrajet /",
  "SA22bsa006_u:100": "tadeva vidhivadbhuiktamutkṛṣṭaṃ tu rasāyanam // Cvp_50 //",
  "SA22bsa006_u:101": "rasaghṛṣṭaṃ yathā tāmraṃ nirdoṣaṃ kāñcanaṃ bhavet /",
  "SA22bsa006_u:102": "jñānaśuddhyā tathā kleśāḥ samyak kalyāṇakārakāḥ // Cvp_51 //",
  "SA22bsa006_u:103": "hīnayānābhirūḍhānāṃ mṛtyuśaṅkā pade pade /",
  "SA22bsa006_u:104": "saṃgrāmajayacittastu dūra eva vyavasthitaḥ // Cvp_52 //",
  "SA22bsa006_u:105": "mahāyānābhirūḍhastu karuṇādharmavarmitaḥ /",
  "SA22bsa006_u:106": "prajñātantudhanurbāṇo jagaduḍvaraṇāśayaḥ // Cvp_53 //",
  "SA22bsa006_u:107": "mahāsattvo mahopāyaḥ sthirabudviratandritaḥ /",
  "SA22bsa006_u:108": "jitvā dustarasaṅgrāmaṃ tārayedaparānapi // Cvp_54 //",
  "SA22bsa006_u:109": "paśavo 'pi hi kliśyante svārthamātraparāyaṇāḥ /",
  "SA22bsa006_u:110": "jagadarthavidhātāro dhanyāste viralā janāḥ // Cvp_55 //",
  "SA22bsa006_u:111": "śītavātādiduḥkhāni sahante svārthalampaṭāḥ /",
  "SA22bsa006_u:112": "jagadarthapravṛttāste na sahante kathaṃ nu te // Cvp_56 //",
  "SA22bsa006_u:113": "nārakāṇyapi duḥkhāni soḍhavyāni kṛpālubhiḥ /",
  "SA22bsa006_u:114": "śītavātādiduḥkhāni kastānyapi vicārayet // Cvp_57 //",
  "SA22bsa006_u:115": "na kaṣṭakalpanāṃ kuryānnopavāsena ca kriyām /",
  "SA22bsa006_u:116": "snānaṃ śaucaṃ na caivātra grāmadharmaṃ vivarjayet // Cvp_58 //",
  "SA22bsa006_u:117": "nakhadantāsthimajjānaḥ pituḥ śukravikārajāḥ /",
  "SA22bsa006_u:118": "māṃsaśoṇitakeśādi mātṛśoṇitasambhavam // Cvp_59 //",
  "SA22bsa006_u:119": "itthamaśucisambhūtaḥ piṇḍo yo 'śucipūritaḥ /",
  "SA22bsa006_u:120": "kathaṃ saṃstādṛśaḥ kāyo gaṅgāsnānena śudhyati // Cvp_60 //",
  "SA22bsa006_u:121": "na hyaśucirghaṭastoyaiḥ kṣālito 'pi punaḥ punaḥ /",
  "SA22bsa006_u:122": "tadvadaśucisampūrṇaḥ piṇḍo 'pi na viśudhyati // Cvp_61 //",
  "SA22bsa006_u:123": "pratarannapi gaṅgāyāṃ naiva śvā śuddhimarhati /",
  "SA22bsa006_u:124": "taddadvarmadhiyāṃ puṃsāṃ tīrthasnānaṃ tu niṣphalam // Cvp_62 //",
  "SA22bsa006_u:125": "dharmo yadi bhavetsnānātkaivartānāṃ kṛtārthatā /",
  "SA22bsa006_u:126": "naktandivaṃ jalasthānāṃ matsyādīnāṃ tu kā kathā // Cvp_63 //",
  "SA22bsa006_u:127": "pāpakṣayo 'pi snānena naiva syāditi niścayaḥ /",
  "SA22bsa006_u:128": "yato rāgādivṛddhistu dṛśyate tīrthasevinām // Cvp_64 //",
  "SA22bsa006_u:129": "rāgo dveṣaśca mohaśca īrṣyā tṛṣṇā ca sarvadā /",
  "SA22bsa006_u:130": "pāpānāṃ mūlamākhyātaṃ naiṣāṃ snānena śodhanam // Cvp_65 //",
  "SA22bsa006_u:131": "ātmātmīyagrahādete sambhavantīha janminaḥ /",
  "SA22bsa006_u:132": "avidyāhetukaḥ so 'pi sāvidyā bhrāntiriṣyate // Cvp_66 //",
  "SA22bsa006_u:133": "raupyabuddhiryathā śuktau śuktidṛṣṭau nivartate /",
  "SA22bsa006_u:134": "nairātmyadarśanātsāpi nirmūlamavasīdati // Cvp_67 //",
  "SA22bsa006_u:135": "sarpabuddhiryathā rajjau rajjudṛṣṭau nivartate /",
  "SA22bsa006_u:136": "sarpabuddhiḥ punastatra naiva syādiha janmani // Cvp_68 //",
  "SA22bsa006_u:137": "sattvabuddhistathātrāpi vajrajñānānnivartate /",
  "SA22bsa006_u:138": "na bhāvaḥ sambhavettatra dagdhabīja ivāṅkuraḥ // Cvp_69 //",
  "SA22bsa006_u:139": "nairātmyaśucisaṅgātaḥ piṇḍaḥ prakṛtinirmalaḥ /",
  "SA22bsa006_u:140": "tasya santāpane dharmaḥ kaṣṭaṃ bālairvikalpitaḥ // Cvp_70 //",
  "SA22bsa006_u:141": "candrodayavyayañjāpi apekṣya tithikalpanā /",
  "SA22bsa006_u:142": "sūryodayavyayenāpi divārātrivyavasthitiḥ // Cvp_71 //",
  "SA22bsa006_u:143": "pūrvādivyavahāro 'pi kalpanāpekṣayā kṛtaḥ /",
  "SA22bsa006_u:144": "grahanakṣatrarāśyādi sarvalokairvikalpitam // Cvp_72 //",
  "SA22bsa006_u:145": "śītoṣṇavarṣaṇāpekṣā tathaiva ṛtukalpanā /",
  "SA22bsa006_u:146": "svakarmaphalabhogo 'yaṃ śubhāśubhagrahoditaḥ // Cvp_73 //",
  "SA22bsa006_u:147": "avidyākardamāliptaṃ cittacintāmaṇiṃ pumān /",
  "SA22bsa006_u:148": "pravṛttaḥ kṣālituṃ vidvān ko 'vidyāṃ vṛṃhayetpunaḥ // Cvp_74 //",
  "SA22bsa006_u:149": "na grahatithinakṣatradeśakālādyapekṣaṇam /",
  "SA22bsa006_u:150": "viharennirvikalpastu nirnimittamaśaṅkitaḥ // Cvp_75 //",
  "SA22bsa006_u:151": "yadyadindriyamārgatvaṃ yāyāttattatsvabhāvataḥ /",
  "SA22bsa006_u:152": "susamāhitayogena sarvaṃ buddhamayaṃ vadet // Cvp_76 //",
  "SA22bsa006_u:153": "cakṣurvairocano buddhaḥ śravaṇaṃ vajrasūryakaḥ /",
  "SA22bsa006_u:154": "ghrāṇaṃ ca paramāśvastu padmanarteśvaro mukham // Cvp_77 //",
  "SA22bsa006_u:155": "kāyaḥ śrīheruko rājā vajrasattvaśca mānasam /",
  "SA22bsa006_u:156": "evaṃ samyak sadā yogī vicaretkaruṇātmakaḥ // Cvp_78 //",
  "SA22bsa006_u:157": "siddhāntī nirvikalpo 'sau sthirakalpastu dhīdhanaḥ /",
  "SA22bsa006_u:158": "yatheṣṭaceṣṭāvyāpāraḥ sarvabhuk sarvakṛttathā // Cvp_79 //",
  "SA22bsa006_u:159": "sarvakāmakriyākārī yathārucitaceṣṭitaḥ /",
  "SA22bsa006_u:160": "utthito vā niṣaṇo vā caṅkramanvā svapaṃstathā // Cvp_80 //",
  "SA22bsa006_u:161": "amaṇḍalapraviṣṭo vā sarvāvaraṇavānapi /",
  "SA22bsa006_u:162": "svādhidaivatayogātmā mandapuṇyo 'pi sidhyati // Cvp_81 //",
  "SA22bsa006_u:163": "anena sarvasauritvaṃ sarvabuddhatvameva vā /",
  "SA22bsa006_u:164": "janmanīhaiva tattvajñaḥ samprāpnoti na saṃśayaḥ // Cvp_82 //",
  "SA22bsa006_u:165": "yathā prākṛtalokena yogiloko na bādhyate /",
  "SA22bsa006_u:166": "bādhyante dhīviśeṣeṇa yogino 'pyuttarottaraiḥ // Cvp_83 //",
  "SA22bsa006_u:167": "mahāprajñāmahopāyamahākṛpādhimokṣataḥ /",
  "SA22bsa006_u:168": "mahāyānasamuddiṣṭaṃ mahāsattvasya gocaram // Cvp_84 //",
  "SA22bsa006_u:169": "yatkalpānāmasaṃkhyeyairna prāptaṃ bahubhirmatam /",
  "SA22bsa006_u:170": "janmanyatraiva buddhatvaṃ prāpyate nātra saṃśayaḥ // Cvp_85 //",
  "SA22bsa006_u:171": "mahāyānasya māhātmyaṃ puṇyajñānena sambhṛtam /",
  "SA22bsa006_u:172": "sarvajñatvaṃ padaṃ ramyaṃ sadyo janmani labhyate // Cvp_86 //",
  "SA22bsa006_u:173": "āgamaśruticintā tu mahāyāne na gṛhyate /",
  "SA22bsa006_u:174": "āśayānuśayābhedād yānābhedaḥ prakāśyate // Cvp_87 //",
  "SA22bsa006_u:175": "anya evādhimokṣo 'yaṃ tathānyā bodhicārikā /",
  "SA22bsa006_u:176": "anyā cittaviśuddhiśca phalamandhadihocyate // Cvp_88 //",
  "SA22bsa006_u:177": "samīpe nirmalādarśe rūpaṃ nirmalacakṣuṣaḥ /",
  "SA22bsa006_u:178": "yathā bhāti suvispaṣṭaṃ svacchaprakṛtinirmalam // Cvp_89 //",
  "SA22bsa006_u:179": "vidhūtakalpanājālaviṣpraṣṭaśuddhacetasāṃ /",
  "SA22bsa006_u:180": "yogināñca tathā jñānaṃ prajñānirmaladarpaṇaiḥ // Cvp_90 //",
  "SA22bsa006_u:181": "sūryakāntisamāśliṣṭasūryakāntamaṇau yathā /",
  "SA22bsa006_u:182": "sahasā prajvalatyagniḥ samathaḥ svārthasādhane // Cvp_91 //",
  "SA22bsa006_u:183": "apāstakalpanājālaṃ sūryakāntanibhaṃ manaḥ /",
  "SA22bsa006_u:184": "prajñāsūryāṃ śusaṃśliṣṭaṃ tadvajjvalati yoginām // Cvp_92 //",
  "SA22bsa006_u:185": "kāṣṭhadvayanigharṣeṇa yathā jvalati pāvakaḥ /",
  "SA22bsa006_u:186": "ādimadhyāntasaṃśuddhaḥ sarvavastuprakāśakaḥ /",
  "SA22bsa006_u:187": "prajñopāyasamāyogādyogijñānaṃ tathā viduḥ // Cvp_93 //",
  "SA22bsa006_u:188": "yathaivaikaḥ pradīpo 'yaṃ varttyantarasamāśritaḥ /",
  "SA22bsa006_u:189": "yathāsvārthaṃ yathāsthānaṃ karotyuccaiḥ prakāśanam // Cvp_94 //",
  "SA22bsa006_u:190": "sphuraṇānantamūrtistu prajñopāyavibhāvanaiḥ /",
  "SA22bsa006_u:191": "nānādhimuktasattvānāṃ yathākṛtyamanuṣṭhayet // Cvp_95 //",
  "SA22bsa006_u:192": "vidhi jñohi yathā kaścitkṣīrādamṛtamuddharet /",
  "SA22bsa006_u:193": "nirdoṣaṃ śītalaṃ hṛdyaṃ sarvavyādhivināśanam // Cvp_96 //",
  "SA22bsa006_u:194": "prajñākṣīramahopāyādvidhivanmathanotthitaḥ /",
  "SA22bsa006_u:195": "viśuddhadharmadhātuḥ sa sukhāsukhavināśanaḥ // Cvp_97 //",
  "SA22bsa006_u:196": "yathā latā samudbhūtā phalapuṣpasamanvitā /",
  "SA22bsa006_u:197": "tathaikakṣaṇasambodhiḥ sambhāradvayasaṃyutā // Cvp_98 //",
  "SA22bsa006_u:198": "[vaśadveṣagatistambha] varṣaṇākarṣaṇādikam /",
  "SA22bsa006_u:199": "madyamāṃsarato yogī kurvannāpyupalipyate // Cvp_99 //",
  "SA22bsa006_u:200": "[hastakaṅkaṇabimbāya ki]mādarśaḥ samīkṣyate /",
  "SA22bsa006_u:201": "mahāyāne yato 'dyāpi mantrasāmarthyadarśanam // Cvp_100 //",
  "SA22bsa006_u:202": "mātṛduhitṛsambandha[stattvato 'tra na kalpyate /",
  "SA22bsa006_u:203": "bhagnāyodhūpavarttīva] jagadāha tathāgataḥ // Cvp_101 //",
  "SA22bsa006_u:204": "pañcabhūtātmakaṃ śukraṃ śoṇitañcāpi tādṛśam /",
  "SA22bsa006_u:205": "tanmayaḥ khalu piṇḍo 'yaṃ ko vipraḥ kaśca vāntyajaḥ // Cvp_102 //",
  "SA22bsa006_u:206": "[pañcaskandhātmakaṃ sarvaṃ]śarīraṃ khalu bhikṣavaḥ /",
  "SA22bsa006_u:207": "anityaṃ duḥkhaśūnyañca na jātirna ca jātimān // Cvp_103 //",
  "SA22bsa006_u:208": "kaivarttīgarbhambhūtaḥ kaściñcā[ṇḍālajātimān /",
  "SA22bsa006_u:209": "tapasā brāhmaṇo jātastasmājjātirakāraṇam // Cvp_104 //",
  "SA22bsa006_u:210": "svasāraṃ mātaraṃ śvaśrūṃ svaputrīṃ bhāgineyikām /",
  "SA22bsa006_u:211": "brāhmaṇīṃ kṣatriyāṃ vaiśyāṃ vidhijñānena śūdrikām] // Cvp_105 //",
  "SA22bsa006_u:212": "ekāṅgavikalāṃ hīnāṃ garhītāmantyajāmapi /",
  "SA22bsa006_u:213": "yoṣitaṃ pūjayennityaṃ jñānavajraprabhāvanaiḥ // Cvp_106 //",
  "SA22bsa006_u:214": "[sarvadā smitavakreṇa mantravistṛtacakṣuṣā /",
  "SA22bsa006_u:215": "sambodhau cittamutpādyasvādhidaivatabhāvataḥ // Cvp_107 //",
  "SA22bsa006_u:216": "paśyeddṛśyaṃ kṣaṇaṃkiñcicchotavyaṃ śṛṇuyāttathā /",
  "SA22bsa006_u:217": "satyāsatyaviyuktaṃ tuvadedvākyamatandritaḥ] // Cvp_108 //",
  "SA22bsa006_u:218": "snānābhyañjanavastrādikhānapānādiyantataḥ /",
  "SA22bsa006_u:219": "svādhidaivatayogenacintayetpūjanāvidhim // Cvp_109 //",
  "SA22bsa006_u:220": "[gītaṃvādyaṃ tathā nṛtyaṃ sopāyena vratī bhajet /",
  "SA22bsa006_u:221": "akurvanniha bhāveṣusarveṣvabhiniveśanam // Cvp_110 //",
  "SA22bsa006_u:222": "svātmabhāvaprahāṇenatāpayenna tapasyayā] /",
  "SA22bsa006_u:223": "sukhādyathā sukhaṃdhyāyetsambuddho 'yamanāgataḥ // Cvp_111 //",
  "SA22bsa006_u:224": "sarvakāmopabhogaistu ramathamuktito 'bhayāt /",
  "SA22bsa006_u:225": "mā bhaiṣṭa nāsti vaḥ pāpaṃsamayo duratikramaḥ // Cvp_112 //",
  "SA22bsa006_u:226": "mantrasaṃskṛtakāṣṭhādidevatvamadhigacchati /",
  "SA22bsa006_u:227": "kiṃ punaḥ jñānavān kāyaḥkaṣṭaṃ mohaviceṣṭitam // Cvp_113 //",
  "SA22bsa006_u:228": "prākṛtatvamahaṅkāraṃparityajya samāhitaḥ /",
  "SA22bsa006_u:229": "prajñopāyavidhānenakriyāmimāṃ samācaret // Cvp_114 //",
  "SA22bsa006_u:230": "paṅkajātaṃ yathā padmaṃpaṅkadoṣairna lipyate /",
  "SA22bsa006_u:231": "vikalpavāsanādoṣaistathāyogī na lipyate // Cvp_115 //",
  "SA22bsa006_u:232": "[vikalpovimbasaṅkāśo dṛṣṭidoṣairna lipyate /",
  "SA22bsa006_u:233": "anbhasā lipyate naivayadvadudakacandramāḥ] // Cvp_116 //",
  "SA22bsa006_u:234": "anādivāsanāpaṅkairviliptaṃcittaratnakam /",
  "SA22bsa006_u:235": "prajñopāyajalenaiva[kṣālitaṃsamprakāśate] // Cvp_117 //",
  "SA22bsa006_u:236": "svādhidevatayogasyasthiracittasya dhīmataḥ /",
  "SA22bsa006_u:237": "muktaḥ kudṛṣṭimeghaiścabhāsate cittabhāskaraḥ // Cvp_118 //",
  "SA22bsa006_u:238": "[prajñālakṣmaparicchedebhūtārthasya viniścayāt /",
  "SA22bsa006_u:239": "dharmadhāturupādeyo 'vidyāvyatyayavarjanāt // Cvp_119 //",
  "SA22bsa006_u:240": "prajñāmudgaravidhvaste]sahasā kalpanāghaṭe /",
  "SA22bsa006_u:241": "prakṛtyā nirmalaḥ svacchojñānadīpaḥ prakāśate // Cvp_120 //",
  "SA22bsa006_u:242": "suprasiddhāni bhūtānikṣityagnijalavāyavaḥ /",
  "SA22bsa006_u:243": "kriyante hyanyathāvijñairmantrasāmarthyayogataḥ // Cvp_121 //",
  "SA22bsa006_u:244": "sarvavādaṃ parityajyamantravādaṃ samācaret /",
  "SA22bsa006_u:245": "yasya mantrasyasāmarthyātsaukhyabhāvo 'pi sidhyati // Cvp_122 //",
  "SA22bsa006_u:246": "triratnaṃ na parityājyaṃbodhicittaṃ tathā guruḥ /",
  "SA22bsa006_u:247": "na vadhyāḥ prāṇinaḥ ke 'pisamayānyapyadhiṣṭhayet // Cvp_123 //",
  "SA22bsa006_u:248": "madhu raktaṃ sakarpūraṃraktacandanayojitam /",
  "SA22bsa006_u:249": "munivajrodakaṃ caivapañcaitānyapyadhiṣṭhayet // Cvp_124 //",
  "SA22bsa006_u:250": "anyaiścasamayairdivyaiścittasyotkarṣakārakaiḥ /",
  "SA22bsa006_u:251": "mārutakṣobhaśāntyarthaṃprīṇayeccittavajrakam // Cvp_125 //",
  "SA22bsa006_u:252": "[nāśucibhāvaāśaṅkyo 'vikalpyayogalīlayā /",
  "SA22bsa006_u:253": "samāyuktena cittena mantrīsarvaṃ samācaret] // Cvp_126 //",
  "SA22bsa006_u:254": "makṣikāpadamātreṇaviṣeṇāpyabhibhūyate /",
  "SA22bsa006_u:255": "aṇumātrā ghṛṇā śaṅkāmṛtyukaṣṭena saṃyutā // Cvp_127 //",
  "SA22bsa006_u:256": "suyuddhaṃ vācaredvijñaḥsupalāyanameva vā /",
  "SA22bsa006_u:257": "āntarālikabhāvastu vyarthovai patanaṃ bhavet // Cvp_128 //",
  "SA22bsa006_u:258": "gurorājñāñca mudrāñcachāyāmapi na laṅghayet /",
  "SA22bsa006_u:259": "guṇāstasya paraṃ grāhyā doṣānaiva kadācana // Cvp_129 //",
  "SA22bsa006_u:260": "ācāryaḥ paramo devaḥpūjanīyaḥ prayatnataḥ /",
  "SA22bsa006_u:261": "svayaṃ vajradharo rājāsākṣādrūpeṇa saṃsthitaḥ // Cvp_130 //",
  "SA22bsa006_u:262": "yathodakamaṇiḥ śuddhaḥkaluṣodakaśodhakaḥ /",
  "SA22bsa006_u:263": "śraddhāmaṇistathāproktaścittaratnaviśodhakaḥ // Cvp_131 //",
  "SA22bsa006_u:264": "śraddhāvānmuhyate ko 'piprajñācakṣurvivarjitaḥ /",
  "SA22bsa006_u:265": "utpādayedataḥprajñāmāgamādhigamātmikām // Cvp_132 //",
  "SA22bsa006_u:266": "śrāddho bahuśrutaḥ prājñaḥprakṛtyā karuṇātmakaḥ /",
  "SA22bsa006_u:267": "jagadduḥkhavināśāyasukhopāyaṃ sa vindati // Cvp_133 //",
  "SA22bsa006_u:268": "cittaviśuddhimādhāyayanmayopārjitaṃ sukham /",
  "SA22bsa006_u:269": "cittaviśuddhimādhāya tenāstusukhito janaḥ // Cvp_134 //",
  "SA22bsa006_u:270": "// kṛtiriyamāryadevapādānāmiti //"
}