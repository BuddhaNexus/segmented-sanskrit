{
  "SA01bsa039_u:0": "Daśākuśalakarmapathadeśanā",
  "SA01bsa039_u:1": "namo ratnatrayāya",
  "SA01bsa039_u:2": "kenacit sugatiprāptukāmena heyā daśākuśalakarmapathāḥ prakṛtisāvadyāḥ, tadyathā-",
  "SA01bsa039_u:3": "“trividhaṃ kāyikaṃ karma vācikaṃ tu caturvidham /",
  "SA01bsa039_u:4": "mānasaṃ triprakāraṃ ca daśaite 'kuśalā matāḥ // 1 //",
  "SA01bsa039_u:5": "ete pravibhāgaśaḥ vyākhyāyante- tatra tāvat kāyikam-prāṇātipātaḥ,",
  "SA01bsa039_u:6": "adattādānam,",
  "SA01bsa039_u:7": "kāmamithyācāraśceti /",
  "SA01bsa039_u:8": "vācikam- mṛṣāvādaḥ,",
  "SA01bsa039_u:9": "paiśunyam,",
  "SA01bsa039_u:10": "pāruṣyam,",
  "SA01bsa039_u:11": "saṃbhinnapralāpaśca /",
  "SA01bsa039_u:12": "mānasañca- abhidhyā,",
  "SA01bsa039_u:13": "vyāpādo,",
  "SA01bsa039_u:14": "mithyādṛṣṭiśca /",
  "SA01bsa039_u:15": "tatra prāṇātipātastu prāṇibhāvaḥ,",
  "SA01bsa039_u:16": "prāṇisaṃjñābhāvaḥ,",
  "SA01bsa039_u:17": "vadhakacittopasthitiḥ,",
  "SA01bsa039_u:18": "etadupāyakaraṇam,",
  "SA01bsa039_u:19": "prāṇāvarodhabhāvaśceti etatpañcāṅgaiḥ saṃyukto bhavati prāṇātipātaḥ /",
  "SA01bsa039_u:20": "tatra katamat adattādānam?",
  "SA01bsa039_u:21": "parabhāvaḥ,",
  "SA01bsa039_u:22": "paraparigrahasaṃjñatvam ca,",
  "SA01bsa039_u:23": "steyacittopasthitiḥ,",
  "SA01bsa039_u:24": "tadupāyakaraṇam,",
  "SA01bsa039_u:25": "sthānacyutiśca etatpañcāṅgasaṃyuktaṃ bhavatyadattādānam /",
  "SA01bsa039_u:26": "kāmamithyācārastu caturvidhaḥ /",
  "SA01bsa039_u:27": "asthānam, akālaḥ,",
  "SA01bsa039_u:28": "adeśaḥ,",
  "SA01bsa039_u:29": "agamyaśceti /",
  "SA01bsa039_u:30": "tatra asthānaṃ tu saddharma-pratimādi-bodhisattvasthānācāryopādhyāyadakṣiṇīya- mātā-pitṛ-gurvādisaṃnidhiḥ /",
  "SA01bsa039_u:31": "akāla iti divase ṛtumatī-garbhiṇī-śiśupoṣiṇībhiḥ anicchāduḥkhadaurmanasyapīḍitābhiḥ,",
  "SA01bsa039_u:32": "aṣṭāṅgoposathāvasthitau ca /",
  "SA01bsa039_u:33": "adeśa iti mukhavarcomārgatvaṃ,",
  "SA01bsa039_u:34": "kumārakanyayoḥ puraḥpṛṣṭharandhratvaṃ svagastatvaṃ ca /",
  "SA01bsa039_u:35": "agamyāstu sarvāḥ parastriyaḥ dharma-dhvaja-kula-rakṣitāḥ,",
  "SA01bsa039_u:36": "rājarakṣitāḥ,",
  "SA01bsa039_u:37": "paraparigṛhītā veśyāḥ,",
  "SA01bsa039_u:38": "sambandhinyaḥ,",
  "SA01bsa039_u:39": "tiraścyaśca /",
  "SA01bsa039_u:40": "evaṃ svabhāryāsevane 'pi bhavati kāmamithyācāraḥ /",
  "SA01bsa039_u:41": "tatra mṛṣāvādastu avāstavikatvam,",
  "SA01bsa039_u:42": "vastusthiticyutiḥ,",
  "SA01bsa039_u:43": "mithyāsaṃjñābhāvaḥ,",
  "SA01bsa039_u:44": "mithyopāyopasthitiśca,",
  "SA01bsa039_u:45": "tadupāyakaraṇanceti mithyāvacanoktiśca ityetat pañcāṅgasaṃyoge mṛṣāvādaḥ /",
  "SA01bsa039_u:46": "paiśunyaṃ tu kliṣṭacittena parabhedakathanam /",
  "SA01bsa039_u:47": "pāruṣyamiti paramarmavedhi dveṣavacanam /",
  "SA01bsa039_u:48": "sambhinnapralāpa iti-rāgopayuktatvād āsaktiyogād vā avācyavacanam /",
  "SA01bsa039_u:49": "abhidhyeti paradhana-dravyaiśvaryeṣu tīvrāsaktacittatā /",
  "SA01bsa039_u:50": "vyāpādastu sattveṣu vidveṣabhāvaḥ,",
  "SA01bsa039_u:51": "etān sattvān haniṣyāmi rotsyāmi,",
  "SA01bsa039_u:52": "tāḍayiṣyāmi,",
  "SA01bsa039_u:53": "bandhayiṣyāmi iti cintanam /",
  "SA01bsa039_u:54": "mithyādṛṣṭiriti nāsti dānam,",
  "SA01bsa039_u:55": "na yajñaṃ,",
  "SA01bsa039_u:56": "nehalokaḥ,",
  "SA01bsa039_u:57": "na paralokaḥ,",
  "SA01bsa039_u:58": "na śramaṇaḥ,",
  "SA01bsa039_u:59": "na brāhmaṇaḥ,",
  "SA01bsa039_u:60": "na devaḥ,",
  "SA01bsa039_u:61": "na buddho bhagavān,",
  "SA01bsa039_u:62": "na arhan,",
  "SA01bsa039_u:63": "na pratyekabuddhaḥ,",
  "SA01bsa039_u:64": "na sucaritam na ca duścaritam,",
  "SA01bsa039_u:65": "na sukṛta-duṣkṛta-karmāṇāṃ phalavipākaśceti /",
  "SA01bsa039_u:66": "bhagavatā ukte 'āryasaddharmasmṛtyupasthāne' mahāyānasūtre ca nirdiṣṭo daśākuśalakarmapatho 'yaṃ tu mahānarakahetuḥ /",
  "SA01bsa039_u:67": "daśākuśalakarmapathasevanena patanti sattvā narakeṣu /",
  "SA01bsa039_u:68": "mahācāryadīpaṅkaraśrījñānapādena praṇītā daśākuśalakarmapathadeśanā samāptā /",
  "SA01bsa039_u:69": "tenaiva bhāratīyopādhyāyena mahāsaṃśodhakalokakṣuṣā bhikṣu-jayaśīlena cānūditaḥ sampāditaśca //"
}