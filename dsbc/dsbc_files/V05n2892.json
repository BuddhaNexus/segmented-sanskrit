{
  "V05n2892:3": "vajrasatva-pārājikā",
  "V05n2892:7": "oṃ namaḥ śrīvajrasatvāya ||",
  "V05n2892:11": "oṃ namaḥ sarvajñāya ||",
  "V05n2892:18": "vajrasatvaṃ namaskṛtya jagattrāṇaṃ mahākṛpam ||",
  "V05n2892:22": "prāyaścittavidhiṃ vakṣye śaucācāraṃśca ca",
  "V05n2892:23": "suvratam ||1 ||",
  "V05n2892:27": "ācāryaḥ paramo devaḥ pūjanīyaḥ prayatnataḥ |",
  "V05n2892:31": "svayaṃ vajradharo rājā sākṣādrūpeṇa saṃsthitaḥ ||2 ||",
  "V05n2892:35": "prāṇivadhaḥ prāyaścitaṃ viṣayabhāga ( śca ) kathyate ||",
  "V05n2892:39": "tatra vajrācāryavratīnāṃ brāhmaṇādivarṇānañca ||",
  "V05n2892:43": "vadhakasya mahāpātakātvāt teṣāṃ vidhaya",
  "V05n2892:44": "ucyante ||3 ||",
  "V05n2892:48": "sa punardvividhā tadyathā ||",
  "V05n2892:49": "svayaṃkṛtati ( svayaṃkrama )",
  "V05n2892:50": "mitināśceti ||",
  "V05n2892:54": "tatra yaḥsvaśarīreṇa puruṣāntaraprayuktyā vā",
  "V05n2892:55": "kriyate ya svayaṃkṛtamucyate ||4 ||",
  "V05n2892:59": "tatrāpi bahavaḥ pratyekotpanne vyāhartumudyato",
  "V05n2892:60": "bhavati ||",
  "V05n2892:64": "tatra kenāhṛtaṃ pratyekamekavadvā bhavati ||",
  "V05n2892:68": "kāmanāyāḥ pratyekamutpannatvāt ||",
  "V05n2892:72": "ataḥ so'pi svayaṃkṛta ityucyate ||5 ||||",
  "V05n2892:76": "yathāha ||",
  "V05n2892:80": "bahunāmekakāryāṇāṃ sarveṣāṃ śastradhārīṇām ||",
  "V05n2892:84": "yadyeko ghātakastatra sarve te ghātakāḥ smṛtāḥ ||6 ||",
  "V05n2892:88": "yatra punastāḍanākāśanadimātrameva karoti |",
  "V05n2892:92": "nāparaṃ kiñcit tena tāḍanādinimittena",
  "V05n2892:96": "tatkāramuddiśya ātmānaṃ ghātayati ||7 ||",
  "V05n2892:100": "tatra nimittavadho draṣṭavyaḥ ||",
  "V05n2892:104": "nimittañca bahuprakārameva saṃbaṃdhādibhiḥ",
  "V05n2892:105": "prayatnena kathitam ||",
  "V05n2892:109": "ākrośitaḥ tāḍito vā'dhanyairvāparipīḍitaḥ | (19)",
  "V05n2892:122": "yamuddiśya tyajetprāṇān tamāhuḥ pratighātakam ||8 ||",
  "V05n2892:126": "anyonyena gṛhītastu prārthayan pāpadarśanam |",
  "V05n2892:130": "yamuddiśya tyajetprāṇān tamāhuḥ pratighātakam ||9 ||",
  "V05n2892:134": "svadravyārthe svabhūmyāṃ vā cāyaṃ duḥkhapīḍitaḥ |",
  "V05n2892:138": "yamuddiśya tyajetprāṇān tamāhuḥ pratighātakam ||10 ||",
  "V05n2892:142": "gobhūhiraṇyopaharaṇe strīṇāṃ kṣatragṛhasya ca |",
  "V05n2892:146": "yamuddiśya tyajetprāṇān tamāhuḥ pratighātakam ||11 ||",
  "V05n2892:150": "śuddhārthaṃ pitramātrārthaṃ māṃsārtha ca athāpi",
  "V05n2892:151": "vā ||",
  "V05n2892:155": "yamuddiśya tyajetprāṇān tamāhuḥ pratighātakam ||12 ||",
  "V05n2892:159": "asaṃbaṃdhena yaḥ kaścit vratī prāṇānparityajet |",
  "V05n2892:163": "tasmaiva tadbhavetpāpaṃ manuṣyaiḥ parikīrtitam ||13 ||",
  "V05n2892:167": "ātatāyinamāyāntaṃ api supratīteraṇe |",
  "V05n2892:171": "jighāṃsati jighāṃsīyān na tena vratihā",
  "V05n2892:172": "bhavet ||14 ||",
  "V05n2892:176": "gurubālakavṛddhaṃ vā vratimeva bahuśrutam |",
  "V05n2892:180": "ātatāyinamāyāntaṃ hanyādevāvicārayan ||15 ||",
  "V05n2892:184": "( compare guruṃ vā bālavṛddhau vā brāhmaṇaṃ vā bahuśrutam )",
  "V05n2892:188": "nātatāyivadho doṣo hanturbhavati kaścana |",
  "V05n2892:192": "prakāśādvā'prakāśādvā māsta manyupṛcchāmi ||16 ||",
  "V05n2892:196": "svādhyāyināṃ kule jātaṃ hanyādvātatāyinam |",
  "V05n2892:200": "na tena pratihāsasthān matpustaṃ manyupṛcchitaḥ ||17 ||",
  "V05n2892:204": "agnido garadaścaiva śastrapāṇirdhanāpahaḥ |",
  "V05n2892:208": "kṣetradārāpahārī ca ṣaḍete ātatāyinaḥ ||18 ||",
  "V05n2892:212": "( nātatāyivadhe doṣo hanturbhavati kaścana |",
  "V05n2892:216": "prakāśaṃ vā'prakāśaṃ vā manyustaṃmanumṛcchati | )",
  "V05n2892:220": "ajñānena tu yaḥ kacid vratitaṃ vinighātayet |",
  "V05n2892:224": "vijñānena tu prayatnaṃ syād cāryo",
  "V05n2892:225": "kurvatyanugraham ||19 || (20)",
  "V05n2892:238": "athedāniṃ vajrācāryādivrativadhaprāyaścittanimitta",
  "V05n2892:239": "vrataṃ kathyate |",
  "V05n2892:243": "vajrācāryavadhātpāpa śodhanāya viśeṣataḥ ||1 ||",
  "V05n2892:250": "dvādaśavarṣaparyantaṃ prāyaścittavidhirbhavet |",
  "V05n2892:254": "ekādaśaṃ tu varṣāṇi dhanadānena śudhyate ||",
  "V05n2892:261": "ratnamuktāsuvarṇaṃ ca gogṛhadānabhūmikam ||",
  "V05n2892:265": "puṣkariṇyādadikhātañca śāalādyutthāpanaṃ tathā ||2 ||",
  "V05n2892:272": "nānālaṃkāravastraṃ ca kāṃsya tāmrādivastu ca ||",
  "V05n2892:276": "śraddhayai tāni dānāni dadyācca pāpakṛnnaraḥ ||3 ||",
  "V05n2892:283": "ācāryāya pravīṇāya śīlavate ca bhikṣave |",
  "V05n2892:287": "vedavide ca viprāya kāyavākcittabhaktitaḥ ||4 ||",
  "V05n2892:294": "pratihatyāvimuktyarthaṃ sarvasvaṃ copapādayet ||",
  "V05n2892:298": "evaṃ dhanavato dānaṃ nirdhanasya japādikam ||5 ||",
  "V05n2892:305": "varṣaikaṃ tu prati yo hi kuryāt ca poṣadhaṃvratam |",
  "V05n2892:309": "tīrtheṣu snāyennityaṃ ,",
  "V05n2892:310": "kuryāccaityapradakṣiṇām ||6 ||",
  "V05n2892:317": "gurugṛhe vasennityaṃ vihāre pāpaṃ prakāśayet |",
  "V05n2892:321": "dharmacintāparo vīro pratihāraṃ jitendriyaḥ ||7 ||",
  "V05n2892:328": "mahāpātakanāśārthaṃ brahmacaryāṃ samācaret |",
  "V05n2892:332": "dānajapādipūjāṃśca pravartanavidhimācaret ||8 ||",
  "V05n2892:339": "prāyaścittena ( tatpaścāt )",
  "V05n2892:340": "apravartenānukramaṃ tathā ||",
  "V05n2892:344": "syādvelāhāre ekāhe tārāhādinadvayam |",
  "V05n2892:348": "tridine'yācitāhāro nirāhāraścaturdinaiḥ ||",
  "V05n2892:355": "icchet dinaiścaturbhiśca pravartemekamucyate |",
  "V05n2892:359": "prāyaścittaṃ pravartāni tāvattriṣu rātriṣu ||10 ||",
  "V05n2892:366": "śrīcaityasthāpanaṃ kuryāt vratihā pāpaśāntaye |",
  "V05n2892:370": "pūjayecchuddhayā bhaktyā pañcopacāraiśca pūjayet ||11 ||",
  "V05n2892:374": "triratnaśaraṇaṃ yasya śīlaṃ ca vratamuttamam | (21)",
  "V05n2892:387": "tasya śuddhirbhavatyevaṃ ihaloke paratra ca ||",
  "V05n2892:391": "kāmato vratighātāsau varṣaikaṃ vratamācaret ||",
  "V05n2892:398": "varṣārddhaṃ tuṃ vrataṃ kuryātpratibaddhasya akāmataḥ ||",
  "V05n2892:402": "arddhe pūrṇe tu homaṃ sa kṛtvā cāryāya dāpayet ||",
  "V05n2892:406": "unmitā kaṅkaṇaṃ vastraṃ dakṣiṇāṃ caiva",
  "V05n2892:407": "bhojanam ||14 ||",
  "V05n2892:414": "tato guṇavān bhikṣuḥ yathāvasaraṃ tatra akuśalaśāntyarthaṃ ||",
  "V05n2892:418": "kalaśādipūjanaṃ samārabhet ||",
  "V05n2892:422": "iṣṭadevatāmantreṇa tadanantaraṃ ca snāpayed ||",
  "V05n2892:426": "pavitraṃ pañcagavyaṃ pradāpayet ||",
  "V05n2892:430": "tatra ca yadi guṇavannāpiguṇavāścaiva",
  "V05n2892:434": "mṛtāni bāndhavāti .......... ||1 ||",
  "V05n2892:438": "tatra bhikṣuvadhasya daśavarṣaparyantaṃ prāyaścittavidhirbhavati |",
  "V05n2892:442": "dvimāsādhikanavavarṣāṇi dhanadānādviśuddhyati ||1 ||",
  "V05n2892:449": "daśamāsastu bhikṣughna etatpoṣadhādimityā dikaṃ |",
  "V05n2892:453": "ataḥ parasarvavidhānaṃ pūrvoktavaditi ||2 ||",
  "V05n2892:460": "tatra ca śivaliṃgabhagnavarṇaṃ kṣapaṇakavadhasya",
  "V05n2892:461": "aṣṭavarṣaparyantam",
  "V05n2892:465": "prāyaścitavidhirbhavati ||3 ||",
  "V05n2892:472": "cartumāsādhikasaptavarṣādi dhanadānādinā śuddhayati |",
  "V05n2892:476": "aṣṭamāsaśivaliṃga- bhagnavarṇakṣapaṇakaghātaka",
  "V05n2892:477": "caret ||",
  "V05n2892:481": "poṣadhavratamityādikam ||",
  "V05n2892:485": "ataḥ paraṃ sarvavidhānaṃ pūrvoktavaditi ||2 ||",
  "V05n2892:492": "evaṃ kavirvidanyadarśana vadhasyāpi nyūnādhika",
  "V05n2892:493": "prāyaścita viṣayabhāga kartavyamiti ||2",
  "V05n2892:497": "tatra ca ||",
  "V05n2892:501": "brahmavadhasya aṣṭavarṣaparyantaṃ prāyaścitavidhirbhavati || (22)",
  "V05n2892:514": "caturmāsādhikasaptavarṣāṇi dhanadānādi śuddhayati ||",
  "V05n2892:518": "aṣṭamāsabrahmaghātakavratahā caret ||",
  "V05n2892:522": "poṣadhādivratamityādikam ||",
  "V05n2892:526": "ataḥ paraṃ sarvavidhānaṃ pūrvoktavaditi ||",
  "V05n2892:530": "tatra ca kṣatriyavadhasya ṣaḍvarṣaparyanta prāyaścittavidhirbhavati ||",
  "V05n2892:534": "sārddhapañcavarṣāṇi dhanadānādviśuddhyati ||",
  "V05n2892:538": "ṣaṇmāsāsāṃstu kṣatriyavadhahā caret ||",
  "V05n2892:542": "poṣadhādivratamityādikam ||",
  "V05n2892:546": "ataḥ sarvavidhānaṃ pūrvoktavaditi ||1 ||",
  "V05n2892:550": "tatra ca vaiśyavadhasya caturvarṣaparyantaṃ prāyaścittavidhirbhavati ||",
  "V05n2892:554": "aṣṭamāsādhikatrivarṣāṇi dhanadānāni śuddhyati ||",
  "V05n2892:558": "caturmāsāṃstu vaiśyahā caret ||",
  "V05n2892:562": "poṣadhādivratamityādikam ||",
  "V05n2892:566": "ataḥparaṃ sarvavidhānaṃ pūrvoktavaditi ||1 ||",
  "V05n2892:570": "tatra ca śūdravadhasya dvivarṣaparyantaṃ prāyaścittavidhirbhavati ||",
  "V05n2892:574": "daśamāsādhikavarṣaikaṃ dhanadānādinā śuddhyati ||",
  "V05n2892:578": "dvau māsau tu śūdrahā caret ||",
  "V05n2892:582": "poṣadhādivratamityādikam ||",
  "V05n2892:586": "ataḥ paraṃ sarvavidhaṃ pūrvoktavaditi ||1 ||",
  "V05n2892:590": "tatra ca hīnakulavadhasya varṣaikaṃ prāyaścittavidhirbhavati ||",
  "V05n2892:594": "ekādaśamāsān dhanadānādināśuddhyati ||",
  "V05n2892:598": "dvātriṃśaddināni tu hīnakulaghātahā caret ||",
  "V05n2892:602": "ṣoṣadhādivratamityādikam ||",
  "V05n2892:606": "ataḥparaṃ sarvavidhānaṃ pūrvoktavaditi || (23)",
  "V05n2892:619": "tatra ca ||",
  "V05n2892:623": "nicakulavadhasya prāyaścittānñjātiśaktiguṇāvekṣayā",
  "V05n2892:627": "viṣayavibhāgakartavyamiti ||",
  "V05n2892:630": "tatra ||",
  "V05n2892:634": "idāniṃ strīvadhasya prāyaścittamucyate ||",
  "V05n2892:638": "evaṃ brāhmaṇīvadhaprāyaścitta brāhmaṇāṃ prāyaścittavaditi ||",
  "V05n2892:642": "evaṃ kṣatriṇīhatyā kṣatriyavadhaprāyaścittavatkartavyamiti ||",
  "V05n2892:646": "evaṃ vaiśyastrīhatyā vaiśyavadhaprāyaścittavatkartavyamiti ||",
  "V05n2892:650": "evaṃ śūdriṇīhatyā śūdravadhaprāyaścittavatkartavyamiti ||",
  "V05n2892:654": "evaṃ hīnakulastrīvadhasya hīnakulaprāyaścittavidhivatkartavyamiti ||",
  "V05n2892:658": "āhitāgnidvijāmasya hanyāpatnīṃ ca vanditām ||",
  "V05n2892:662": "brahmahatyāvrataṃ kuryādatrayameva ca striyā ||1 ||",
  "V05n2892:666": "bālahatyāṃ kṛtaghnaśca viśuddhāmapi dharmataḥ ||",
  "V05n2892:670": "śaraṇāgatamagniśca strīhantā na samāmvaśet ||2 ||",
  "V05n2892:674": "so daśamāsaṃ ca striyaṃ hatvā suhṛdayaṃ pāpakāriṇam ||",
  "V05n2892:678": "viśvāsiroṣato martyaṃcara brahmavadhavrataḥ ||3 ||",
  "V05n2892:682": "gambhiṇīṃ ca striyaṃ hatvā brahmacaryavrataṃ",
  "V05n2892:683": "caret ||",
  "V05n2892:687": "bahutadviguṇāṃ vāsaḥ strīhatyāya naraye",
  "V05n2892:688": "iti ||4 ||",
  "V05n2892:692": "svakriyāṃ cālobhena māmavāyātmadhogatim ||",
  "V05n2892:696": "yasya vidhiṃ ........................ ||5 ||",
  "V05n2892:700": "atyantasarujadehe rājacaurabhayādiṣu ||",
  "V05n2892:704": "gurudevāgnikāryaṃ ca mityahāmimadoṣakṛtā ||6 ||",
  "V05n2892:708": "gṛhastho brahmacārī ca prāyaścittaṃ dvidhā",
  "V05n2892:709": "bhavet || ( ? )",
  "V05n2892:713": "sakāmākāmabhedena tāveva hi vidhau smṛtau ||7 ||",
  "V05n2892:717": "ajñānāttu akāmasya dviguṇā śuddhimādiśet ||",
  "V05n2892:721": "bhauvikādviguṇā jñeyaṃ prāyaścittaṃ tu",
  "V05n2892:722": "sarjanam ||8 || (24)",
  "V05n2892:735": "aśīti yasya varṣāṇi bālamāsastu ṣoḍaśaḥ ||",
  "V05n2892:739": "prāyaścittārghamahanti trayo vā vyādhipīḍitāḥ ||9 ||",
  "V05n2892:746": "tatrāpi ca parikveśaṃ jñātvā dvārdhaṃ",
  "V05n2892:747": "pralokayan ||",
  "V05n2892:751": "suduḥkarasvayaṃ kartuṃ akṣayā dviguṇānyataḥ ||10 ||",
  "V05n2892:758": "deśakālaṃ ca yaḥ śaktijatibhaktikriyākramaḥ ||",
  "V05n2892:762": "suvicārya pradātavyaṃ nopavāsānujā itaḥ ||11 ||",
  "V05n2892:769": "prāyaścittasamarthasya pitṛbhrātādivāśvavaiḥ ||",
  "V05n2892:773": "tadvibhajya pradātavyaṃ dviguṇā tvitaraiḥ ( ? ) janaiḥ ||12 ||",
  "V05n2892:780": "adhunā",
  "V05n2892:784": "agamyāgamyagamanabhakṣyābhakṣyasparśanibhikṣamucyate ||",
  "V05n2892:788": "durbale'nugrahakāryaṃ tathā vai bālavṛddhayoḥ |",
  "V05n2892:792": "anyathā tu bhaveddoṣe na syātteṣāṃ anugrahaḥ ||2 ||",
  "V05n2892:799": "snehādvā yadi mohādvā bhayādajñānato'pi vā |",
  "V05n2892:803": "kurvantyanugrahaṃ ye tu kalyāṇaṃ teṣu gacchati  ||3 ||",
  "V05n2892:811": "deśakālavayaḥśaktipāpañca vyaktaṃ yatnataḥ |",
  "V05n2892:815": "prāyaścitta tatprakalpasya dharmavyavasthitaḥ ||4 ||",
  "V05n2892:822": "ākṛṣṭe cetkulālasya keśo bhājyanaduhyadā |",
  "V05n2892:826": "tripavartamapūtasyāstasatayā śīlavrataṃ",
  "V05n2892:827": "caret ||1 ||",
  "V05n2892:834": "gatvāntyajāḥ striyo bhuktvā pītvā ca pratigṛhyatā |",
  "V05n2892:838": "patati yaḥ vrate śīle tripravartenena śuddhyati ||2 ||",
  "V05n2892:845": "etāṃ gatvā striyaḥ śreṣṭhāḥ kuryuḥ śīlaṃ tathā",
  "V05n2892:846": "vratam |",
  "V05n2892:850": "brāhmaṇakṣatriyavaiśyastriyaḥ śūdreṇa saṃgatāḥ ||",
  "V05n2892:854": "aprasūtāḥ viśuddhyanti prāyaścittena tāstadā ||3 ||",
  "V05n2892:861": "mātāmātṛsvasāśvaśrūmātulānīpitṛṣvasā |",
  "V05n2892:865": "pitṛvyasakhiśiṣyastrī bhaginyāśca sakhī tathā ||4 ||",
  "V05n2892:869": "duhitācāryabhāryā ca sagotrā śaraṇāgatā | (25)",
  "V05n2892:882": "rājñāpavarjitāḥ dhātrā sādhvīstrīṇāṃ tu mā tathā ||",
  "V05n2892:886": "āsāmanyatragāṃ gatvā gurutalpaḥ sa ucyate ||",
  "V05n2892:890": "śiṣyaḥ syātkartanaṃ tatra nānyāraṇḍo vidhīyate ||",
  "V05n2892:894": "athavā brahmacaryāṃ ca kuryādyo gurutalpagaḥ ||8 ||",
  "V05n2892:901": "vratenetipravartanaṃ purobhavati sa dhruvam |",
  "V05n2892:905": "pratilomavadhapāradārikasya narasya ca ||9 ||",
  "V05n2892:912": "devasvadevatādravyadravyanaivepañcanivedakam |",
  "V05n2892:916": "candradravyañca nirmālyaṃ ṣaḍvidhaṃ smṛtam ||10 ||",
  "V05n2892:923": "grāmādisvasya na dravyaṃ devadravyapaṭādikam ||",
  "V05n2892:927": "naivedyaṃ kalpitaṃ tasmai devaśiṣṭanivedakam ||11 ||",
  "V05n2892:934": "candradravyaṃ tu taṃ hūtaṃ nirmālyaṃ preritaṃ",
  "V05n2892:935": "bahiḥ ||",
  "V05n2892:939": "piṇḍikāsthamanirmālyamapidevavivarjitaiḥ ||",
  "V05n2892:943": "kuvyāṃ jāyate dānaṃ nātaje tasya bhājanam ||12 ||",
  "V05n2892:950": "lepanaṃ siddhihāniśca gandhāyādānatovṛkaḥ |",
  "V05n2892:954": "cāṇḍālatvādyathā dāhe vikrame yo naro bhavet ||",
  "V05n2892:958": "sparśane jāyate strībhiḥ nirmālyaṃ na hi saṃśayaḥ ||13 ||",
  "V05n2892:965": "guruṣvapīmanirmālyaṃ vyākhyāsu pratimāsu ca |",
  "V05n2892:969": "patraṃ puṣpaṃ phalaṃ toyaṃ annapānanamauṣadham ||",
  "V05n2892:973": "anaivedyastu bhuñjīta yathāhārāya kalpitam ||",
  "V05n2892:977": "ahorātroṣitaḥ snātaḥ saṃpūrṇo ca vrataparaḥ |",
  "V05n2892:981": "pañcagavyaṃ sakṛtpītvā pūto bhavati nirmalaḥ ||16 ||",
  "V05n2892:988": "rātrau pūjāṃ ca dānaṃ ca bubhukṣāṃ",
  "V05n2892:989": "parivarjayet |",
  "V05n2892:993": "vinācandroparāgeṇa vināsiddhisamohakam ||17 ||",
  "V05n2892:1000": "grahaṇodvāhasaṃkrāntiyātrārtiprasareṣu ca |",
  "V05n2892:1004": "snānaṃ naimittikaṃ jñeyaṃ rātrāvapi tadiṣyate ||18 ||",
  "V05n2892:1008": "apayantu bhave toyaṃ rātrau madhyamayāmayoḥ | (26)",
  "V05n2892:1021": "snānaṃ tatra na kurvīta na vācamanakriyām ||19 ||",
  "V05n2892:1025": "candrasūryagrahe nāhyāt dadyātsnātvā vimuktayaḥ |",
  "V05n2892:1029": "amuktāstaṅte tasmin snātvā dṛṣṭapare'hani ||20 ||",
  "V05n2892:1036": "snātvā cevāpanāvāpi spṛṣṭvā ca sapragṛhya ca |",
  "V05n2892:1040": "praśasya svastirityuktvā mukta eva na saṃśayaḥ ||21 ||",
  "V05n2892:1047": "gṛhe dāhe mṛte caiva parivāre ca mānuṣe |",
  "V05n2892:1051": "na prāṇināṃ vadhastatra kevalaṃ gṛhadīpanam ||22 ||",
  "V05n2892:1058": "devayātrāvivāheṣu yajñaprakaraṇeṣu ca |",
  "V05n2892:1062": "utsaveṣu ca sarveṣu pṛṣṭāpṛṣṭirna duṣyati ||23 ||",
  "V05n2892:1069": "aśuciṃ saṃspṛśedyattu sa evaikaḥ pradūṣyati |",
  "V05n2892:1073": "tatspṛṣṭvānyānyaduṣyebhiḥ sarva varṇāpayaṃ",
  "V05n2892:1074": "vidhiḥ ||24 ||",
  "V05n2892:1081": "divākirtimudavyāya mṛtikaṃ sūtikaṃ tathā |",
  "V05n2892:1085": "sarvāṃ tasyā śubhāṃ caiva spṛṣṭvā snānena śuddhyati ||25 ||",
  "V05n2892:1092": "yātrādāne vivāheṣu yajñaprakaraṇeṣu ca |",
  "V05n2892:1096": "kākaiśca bhikṣubhiśca saṃspṛṣṭamanannaṃ",
  "V05n2892:1097": "vivarjayat ||",
  "V05n2892:1101": "nityaṃ śuciḥ kāruhastaḥ paṇapahastaprasāritaḥ |",
  "V05n2892:1105": "brahmacārigataṃ bhaktaṃ nityaṃ śuddhamiti",
  "V05n2892:1106": "sthitiḥ ||26 ||",
  "V05n2892:1113": "pituḥ pituḥ svasuḥ putrā piturmātuḥ svasuḥ",
  "V05n2892:1114": "sutum |",
  "V05n2892:1118": "pituḥ mātulaputrāśca vijñeyāḥ pitṛbāndhavāḥ ||27 ||",
  "V05n2892:1125": "mātṛbhrātuḥ svasṛputrāḥ mātulapituḥ svasuḥ sutāḥ |",
  "V05n2892:1129": "māturmātṛputrāśca vijñeyā mātṛbāndhavāḥ ||28 ||",
  "V05n2892:1136": "yatra caivaṃvidhasaṃbandhaḥ saṃbhavati tatraiva",
  "V05n2892:1137": "tebhyaḥ",
  "V05n2892:1141": "pitṛsambandhibhyo mātṛbandhubhyaśca saptamātyanta",
  "V05n2892:1142": "ca vivāho draṣṭavyaḥ ||30 ||",
  "V05n2892:1149": "yatra caivaṃ yadi bhāviprakāśe na saṃbhavati ||",
  "V05n2892:1153": "yatra mātṛka-kuleneva mātṛbandhuśanena pitṛkulameva",
  "V05n2892:1154": "pitṛbandhuśana draṣṭavyam |",
  "V05n2892:1158": "tebhyo sapta eva saptamātya māviho draṣṭavya",
  "V05n2892:1159": "iti ||31 || (27)",
  "V05n2892:1172": "nodvahet kapilāṃ kanyāṃ nādhigatarogiṇīm |",
  "V05n2892:1176": "nālomikāṃ nātilomāṃ na vā jaṭāmapiṅgalām ||32 ||",
  "V05n2892:1183": "akṣaṃ vṛkṣaṃ nadīnāmnā nāpi parvatanāmikā |",
  "V05n2892:1187": "na pakṣahipuṣpanāmnā na ca bhīṣaṇanāsikā ||33 ||",
  "V05n2892:1194": "na avyaṅgāgāṃ sosya nāmnā ha ( ? )",
  "V05n2892:1195": "sacāragāminīm |",
  "V05n2892:1199": "tanūdaśanakeśāñca mṛdvaṅgāmudvahet striyaḥ ||34 ||",
  "V05n2892:1206": "suvarṇasamarūpyaṃ ca kularūpavayaḥ śruteḥ |",
  "V05n2892:1210": "sahadharmataste sa putraṃ cālpadadānaḥ || 35 ||",
  "V05n2892:1217": "aṣṭau bhikṣāmādāya samuciḥ sapta-pañca vā |",
  "V05n2892:1221": "akhalitsādhayitvā tu tatosmayādvijottamā ||36 ||",
  "V05n2892:1228": "na bhikṣā parapākasya na vā bhikṣāpratigrahaḥ |",
  "V05n2892:1232": "avadhūtācca pūtācca somapānaṃ dine dine ||37 ||",
  "V05n2892:1239": "antyajapatito vāpi nigūḍho yatra tiṣṭhati |",
  "V05n2892:1243": "samyak jñātvā tu kālena tataḥ kurvīta śodhanam ||38 ||",
  "V05n2892:1250": "yaduktaṃ tatra pakvānnaṃ tasyoktavilakṣaṇam |",
  "V05n2892:1254": "sarvānekopavāsena pañcagavyaṃ na bodhayet ||39 ||",
  "V05n2892:1261": "sarveṣāmanyajātīnāṃ sparśācamanaṃ viduḥ |",
  "V05n2892:1265": "sa spṛṣṭvā yadā bhuṃkte tasya snānaṃ vidhīyate ||40 ||",
  "V05n2892:1272": "āmavān sa dhṛtaṃ telaṃ snehāśca phalasambhavāḥ |",
  "V05n2892:1276": "mleṃcchabhāṇḍāsthitāḥ hyete saṃkrāntāḥ śucayaḥ",
  "V05n2892:1277": "smṛtāḥ ||41 ||",
  "V05n2892:1284": "carmamāṃsagrahaṇaṃ ca śuddhiprajvālameva ca |",
  "V05n2892:1288": "puṇāśrukaśrukāṇaṃ ca śuddhirutthānacāriṇaḥ ||42 ||",
  "V05n2892:1295": "vivāhotsavayajñeṣu antarāmṛtasūtake |",
  "V05n2892:1299": "pūrvasaṃkalpitaṃ dravyaṃ dīyamānaṃ na dūṣyate ||43 ||",
  "V05n2892:1306": "bhayotsavādisambandhya yadyaśakto yathāsukham |",
  "V05n2892:1310": "dānakāle tu śīlasya yasmāduktamupakṣanam ||44 || (28)",
  "V05n2892:1323": "cavṛ .... kartamāna .... tatotpanna vicintayet |",
  "V05n2892:1327": "tadevatravinniṣpādyaṃ tadgatenāntarātmanā ||45 ||",
  "V05n2892:1334": "evaṃ hi sa kṛte sarve anyathā no bhayaṃ bhavet |",
  "V05n2892:1338": "aśan vrajatyakeśo'pi vṛddhiścaiva gamiṣyati ||46 || ||",
  "V05n2892:1342": "iti gamya-agamya bhakṣyābhakṣa ( bhakṣya-abhakṣya )",
  "V05n2892:1343": "prāyaścittaṃ samāptam ||",
  "V05n2892:1350": "yathāśrutaṃ yathādṛṣṭaṃ nirbarddhagurubhiryathā |",
  "V05n2892:1354": "svasiddhāntādirodhena tadvilaṃghyavilaṃghanam ||13 ||",
  "V05n2892:1361": "mātrāhireṇyapitrā vā tāḍitaputrānuttamaḥ |",
  "V05n2892:1365": "tāḍanena mṛte tasmin pātakairna ca",
  "V05n2892:1366": "lipyate ||14 ||",
  "V05n2892:1373": "so dāso hitakāryamvā dhanināpīḍitāpriyaḥ |",
  "V05n2892:1377": "tāḍanācca mṛte tasmin pātakena na lipyate ||15 ||",
  "V05n2892:1384": "svapitā bhikṣuśāvarddhaṃ śīghraṃ gacchati",
  "V05n2892:1385": "preritaḥ |",
  "V05n2892:1389": "adyādyaca mṛte tasminmānānantaryaṃ",
  "V05n2892:1390": "yayujyate ||16 ||",
  "V05n2892:1397": "suglānenohatā duṣṭaṃ svagalaṃ vinipīḍitam |",
  "V05n2892:1401": "upasthāyakabhikṣusmiṃ mṛte tasminnadoṣabhāk ||17 ||",
  "V05n2892:1408": "anyasajñāna cātyantu pārayaṃ doṣamaśnute |",
  "V05n2892:1412": "ityuktaṃ vinayavyaktaṃ na doṣo duṣṭacetasāmiti ||18 ||",
  "V05n2892:1419": "prāyaścittaśaucācāravidhau prāyaścittatyodayaprakaraṇamiti |",
  "V05n2892:1423": "prāyaścittaśaucācāravidhau prāyaścitta-udayaprakaraṇamiti ||",
  "V05n2892:1430": "idānīṃ goghnaprāyaścittaviṣayavyavasthāpane |",
  "V05n2892:1434": "govadhayā prāyaścittavidhāna-vaiśyavadhaprāyaścittaviṣayo",
  "V05n2892:1435": "vyavasthāpyate |",
  "V05n2892:1439": "govadhayā prāyaścittaṃ vaiśyavadhayā prāyaścittaṃ",
  "V05n2892:1440": "na samamiti ||2 ||",
  "V05n2892:1447": "prāyaścittasaṃpūrṇāṃ te vṛṣabhaṅgāṃ vā dadyāt |",
  "V05n2892:1451": "yo balivardaṃ hanyānme vṛṣabhaṃ dadyāt ||",
  "V05n2892:1458": "brahmacaryāvrataṃ gomaṃ kuryānmāsanirantaraḥ |",
  "V05n2892:1462": "gosuvarṇādikaṃ datvā gohatyānena mucyate ||3 || (29)",
  "V05n2892:1475": "pañcagavyepi godhna māṣamesīvisaṃyate |",
  "V05n2892:1479": "gonūgāmī vasaṃ goṣṭhe gopradānena śuddhyati ||4 ||",
  "V05n2892:1486": "vikaṭākārarūpeṇa nāśayanti yadā kvacit |",
  "V05n2892:1490": "udvignā bhayatrastāsu mṛtāśca doṣamāpnuyuḥ ||5 ||",
  "V05n2892:1497": "tāḍitaḥ preraṇārthaṃ go gopālena kṛpātsare |",
  "V05n2892:1501": "tatastasyā mṛtyāntasya govadhapātake ||6 ||",
  "V05n2892:1508": "godhnasāre vrataṃ kuryād hema vastraṃ ca",
  "V05n2892:1509": "bhojanaṃ |",
  "V05n2892:1513": "mucyante sārddhamāsena nakhakeśavisarjitaḥ ||7 ||",
  "V05n2892:1520": "dadyācca dakṣiṇāṃ gāñca purobhavati enasaḥ |",
  "V05n2892:1524": "toṣaṇānāṃ bahūnāṃ tu bandhane rodhanepi vā ||8 ||",
  "V05n2892:1531": "ekaścedbahavaścaiva devāṅgāyate kvacit |",
  "V05n2892:1535": "pādapādaṃ ca hatyāyāścareyuste pṛthak pṛthak ||9 ||",
  "V05n2892:1542": "ativāhābhiyohatyā sthātiyoktrabandhanāt |",
  "V05n2892:1546": "nadikākṣārasaṃtāro dadaṃścaiva prapātanāt ||10 ||",
  "V05n2892:1553": "pādamekañcaredrodhe dvau pādau bandhyate tathā |",
  "V05n2892:1557": "vyāñjanapādahīnasyāccarasarvavipātane ||11 ||",
  "V05n2892:1564": "yantraṇā gocikitsārthaṃ gūḍhagarbhavimocane |",
  "V05n2892:1568": "yatne kṛte vipattiḥ syād prāyaścittaṃ na",
  "V05n2892:1569": "vidyate ||12 ||",
  "V05n2892:1576": "auṣadhaṃ snehamākāraṃ dadaṃ gobrāhmaṇeṣu ca |",
  "V05n2892:1580": "dīyamāne vipattiḥ syāt na sa pāpena",
  "V05n2892:1581": "lipyate ||13 ||",
  "V05n2892:1588": "dāhacchedaśirobhedaṃ prayatnenupaparvatān |",
  "V05n2892:1592": "narāṇāṃ gohitārthatve prāyaścittaṃ na",
  "V05n2892:1593": "vidyate ||14 ||",
  "V05n2892:1600": "gavāṃ nipātaneścaiva garbhanāśo bhavedyadi |",
  "V05n2892:1604": "ekaikasya bhavet kṛcchraṃ yathāpūrvaṃ tathāparam ||15 ||",
  "V05n2892:1611": "pādamutpannamātre tu dvau pādau gātrasaṃsthite |",
  "V05n2892:1615": "pādau na vratamāceṣṭe hatvā gātre na cetanaḥ ||16 || (30)",
  "V05n2892:1628": "sarvakeśān samuddhṛtya chedavyaitadaṅgulīdvayam |",
  "V05n2892:1632": "evameva ca nārīṇāṃ muṇḍā muṇḍāpanaṃ smṛtam ||17 ||",
  "V05n2892:1639": "devadāsyānnipāteṣu kūpeṣvāyataneṣu ca |",
  "V05n2892:1643": "eṣu goṣu vipannāsu prāyaścittaṃ na",
  "V05n2892:1644": "vidyate ||18 ||",
  "V05n2892:1651": "pāṣāṇena gude vāpi śastreṇāhatyavatāvarān |",
  "V05n2892:1655": "viracanti ye pāpāsteṣāṃ kṛcchraviśodhanam ||19 ||",
  "V05n2892:1662": "so'yaṃ sagopanārthantu maduṣyai oghabandhanāt |",
  "V05n2892:1666": "yallagnāni vivāheṣu prāyaścittaṃ na",
  "V05n2892:1667": "vidyate ||20 ||",
  "V05n2892:1674": "mūrcchitaḥ pavito vāpi yadi vāṇuhataḥ |",
  "V05n2892:1678": "paśu ruṃchitāṃ yadānveti pañcasaptadeśe'pi vā ||21 ||",
  "V05n2892:1685": "snānake yadi gṛhṇīyāt gṛhāmbhaṃ vipibet svayaṃ |",
  "V05n2892:1689": "sarvavyādhivinaṣṭe'smin prāyaścittaṃ na",
  "V05n2892:1690": "vidyate ||22 || ||",
  "V05n2892:1697": "prāyaścittaśaucācāravidhau govadhaprāyaścittadvitīyaprakaraṇasamāptiḥ ||",
  "V05n2892:1704": "yadā sampannamaraṇaṃ upasa ........ vabhavet |",
  "V05n2892:1708": "nāśaucaṃ tatra kartavyaṃ sapiṇḍe sarvajātiṣu ||48 ||",
  "V05n2892:1715": "gṛhadāhe mṛte caiva gavi bāle ca mānuṣe |",
  "V05n2892:1719": "prāyaścittaṃ kathaṃ tatra kena bhūmiśca śuddhyati ||49 ||",
  "V05n2892:1726": "tiṣṭha kṛtsnāyā yāvatsakhyaṃ prajāyate |",
  "V05n2892:1730": "prarudhaṃ ca yadā satāṃ tadā bhūmiḥ viśuddhyati ||50 ||",
  "V05n2892:1737": "haste śūlī mṛṇmaye vāniśāsu kṣitiśāyinī |",
  "V05n2892:1741": "rajasvalā catūrthe'hni snātvā śūddhimavāpnuyāt ||51 ||",
  "V05n2892:1748": "piturgṛhe tu yā kanyā rajaḥpaścāt sabhyasaṃskṛtā |",
  "V05n2892:1752": "bhrūṇahatyā pitustayā sā kanyā vṛṣalī smṛtā ||52 ||",
  "V05n2892:1759": "yastāṃ vivāhayet kanyāṃ lobhamohitamānasaḥ |",
  "V05n2892:1763": "asāvarddhamamaryādo taṃ vidyāt vṛṣalīpatiḥ ||52 || (31)",
  "V05n2892:1776": "mātā caiva pitā caiva jyeṣṭhadātā tathaiva ca |",
  "V05n2892:1780": "sarve te narakaṃ yānti dṛṣṭvā kanyāḥ rajasvalāḥ ||53 ||",
  "V05n2892:1787": "tasmātatvivāhayetkanyāṃ yāvat ṛtumatī bhavet ||",
  "V05n2892:1791": "vivāhaṃ aṣṭavarṣāyāḥ kanyāyāḥ śasyate budhaiḥ ||54 ||",
  "V05n2892:1798": "yāvallajjāmajānāntī yāvat krīḍati bandhubhiḥ ||",
  "V05n2892:1802": "tāvadvivāhayet kanyāṃ munibhiḥ samprakīrtitām ||55 ||",
  "V05n2892:1809": "pāpamalavināśārthaṃ bhartari yajñasambhavet |",
  "V05n2892:1813": "kanyakāpi vidhānena vimuhyāt svāminaṃ vinā ||57 ||",
  "V05n2892:1820": "yā patnī svāminaṃ tyaktvā putraṃ cānyāyayogataḥ |",
  "V05n2892:1824": "tasmāttatra mṛtāyā hi śūnyaśuddhitrirātrataḥ ||58 ||",
  "V05n2892:1831": "utkṛṣṭāya abhirūḍhāya sadṛśāya varāya ca ||",
  "V05n2892:1835": "samprāptāya pitā tasmai dadyāt kanyāṃ yathāvidhi ||59 ||",
  "V05n2892:1842": "kanyāyā dattaśulkāyā vipadyedyadi tatpatiḥ |",
  "V05n2892:1846": "devarāya pradātavyā yadi kanyā mumodate ||60 ||",
  "V05n2892:1853": "enāmuta tadā dravyaṃ samarpaṇīyamiti ||61 ||",
  "V05n2892:1860": "brāhmaṇakṣatriyāvaiśyaśūdrāṇāṃ ca parigrahaḥ |",
  "V05n2892:1864": "svavarṇāśreyastāṃ bhāryāṃ suvarṇavadhaparikriyām ||62 ||",
  "V05n2892:1871": "sagotre miyate nārī vivāhetsaptame pade |",
  "V05n2892:1875": "svāmigotreṇa kartavyāstasyāḥ piṇḍādikakriyāḥ ||63 ||",
  "V05n2892:1882": "vratotsavavivāheṣu tatkṣaṇāḥ mṛtasūtake |",
  "V05n2892:1886": "aśrutavettathāhena kartavyaṃ sarvakarmasu ||64 ||",
  "V05n2892:1893": "sakāmā yāntu kanyāyā sarvarṇāsya patikramaḥ |",
  "V05n2892:1897": "alaṃkṛtya yathānyāyaṃ sa eva nā",
  "V05n2892:1898": "samuddharet ||65 |",
  "V05n2892:1905": "ekapiṇḍoyuyādoyādāpṛtgdhāre niketanā |",
  "V05n2892:1909": "janmanāṃ ca vipattau ca bhavatteṣāṃ tu sūtakaṃ ||66 ||",
  "V05n2892:1916": "yāvattatsutakaṃ gotre caturthe puruṣena tu | (32)",
  "V05n2892:1929": "dāyādye chedamāpnoti pañcamenānmajā .... ||67 ||",
  "V05n2892:1936": "caturthe daśarātresyāvaśrisātsipañcame |",
  "V05n2892:1940": "ṣaṣṭhe caturahāt śuddhirahorātraṃ tu",
  "V05n2892:1941": "saptame ||68 ||",
  "V05n2892:1948": "maitreye atreye ,",
  "V05n2892:1949": "atha rajāmātre dauhitre bhaginīsute |",
  "V05n2892:1953": "sāluke tatsame caiva trirātreṇa śucirbhavet ||69 ||",
  "V05n2892:1960": "daśarātre cātirātraṃ ca trirātraṃ ca śuciriṣyate |",
  "V05n2892:1964": "pūrvasūtakamutpannaṃ punaśca kulasūtakam ||70 ||",
  "V05n2892:1971": "atripekṣā trirātrasyātpatnī śālyakṣaṇo bhavet |",
  "V05n2892:1975": "ataḥ saṃvatsarādūrdhvaṃ sadyaḥ snātvā śucirbhavet ||71 ||",
  "V05n2892:1982": "ajñātodaye bālā ye ca garbhādiniḥsṛtāḥ |",
  "V05n2892:1986": "na teṣāṃ agnisaṃskārārnāśaucaṃ nodakakriyāḥ ||72 ||",
  "V05n2892:1993": "yadi garbho vipadyetastavate vāpi yoṣitā |",
  "V05n2892:1997": "yāvanmāsasthito garbho tāvat dināni sūtakam ||73 ||",
  "V05n2892:2004": "daśavarṣāntare śīrṇe vratasaṃskārakarmaṇi |",
  "V05n2892:2008": "tāvaddinemaśaucaṃ te dadvaṃsakṣāptaprakīrtitā ||74 ||",
  "V05n2892:2015": "yāvannachidyate nārī tāvannāpnoti sūtakam |",
  "V05n2892:2019": "chinnatena tataḥ paścāt sutakaṃ tu vidhīyate ||75 ||-76 || ||",
  "V05n2892:2023": "iti prāyaścittaśaucācāravidhau śaucaṃ",
  "V05n2892:2024": "caturthaprakaraṇamiti ||",
  "V05n2892:2031": "idānīṃ śaucāśaucaprakaraṇamārabhyatehna",
  "V05n2892:2038": "jñānavān ........... nityadevāgnipūjakaḥ |",
  "V05n2892:2042": "vajrācāryāya ekāhā śuddhyate pretasūtake ||1 ||",
  "V05n2892:2049": "guṇavān śīlavān bhikṣuḥ nityadharmaparāyaṇaḥ |",
  "V05n2892:2053": "snānena pretasūtake sadya eva viśuddhyati ||2 ||",
  "V05n2892:2060": "pravrajitasya sarvasya daśaśiṣyānvitasya vai |",
  "V05n2892:2064": "gṛhadharmaprasaktasya saptāhaṃ sutukaṃ",
  "V05n2892:2065": "bhavet ||3 || (33)",
  "V05n2892:2078": "śuddhyedvipro daśāhena dvādaśāhena bhūmipaḥ |",
  "V05n2892:2082": "vaiśyo pañcadaśāhena śūdro māsena śuddhyati ||4 ||",
  "V05n2892:2089": "daśāhaṃ jāvanaśauca sapiṇḍeṣu vidhīyate |",
  "V05n2892:2093": "arvākaṃ ca yamedasthyaṃ tvahamekādaśaucavam ||5 ||",
  "V05n2892:2100": "caturthe'hni saṃcayena kārjantagotraye mṛte |",
  "V05n2892:2104": "tataḥ saṃcayanādvūrdhvamaṅgasya no vidhīyate ||6 ||",
  "V05n2892:2111": "athādhyayanādutthānayogena sahite śuddhyati |",
  "V05n2892:2115": "adhyayanamātrayogena caturāhena śuddhyati ||7 ||",
  "V05n2892:2122": "ekāhā śuddhyate vipro yo'gnivedasamarcitaiḥ |",
  "V05n2892:2126": "hīne hīnetare caiva ahaścacatuhastathā ||8 ||",
  "V05n2892:2133": "janmakarmaparidraṣṭā sadyopāsanavarjito |",
  "V05n2892:2137": "nāmadhārakaviprāṇāṃ daśāhaṃ sutakaṃ bhavet ||9 ||",
  "V05n2892:2144": "kṣatriyāḥ vaiśyayāravi ( ? )",
  "V05n2892:2145": "brāhmaṇā asya catvāraḥ pakṣā bhavanti |",
  "V05n2892:2149": "asthisaṃcayadraṣṭavyaṃ caturthadivase'pi vā ||4 ||",
  "V05n2892:2156": "śāstrapūtāśca ye śūdrānnityadharmaparāyaṇāḥ |",
  "V05n2892:2160": "śuddhyante te'rdhamāsena hyasaśūdrasamāsataḥ ||5 ||",
  "V05n2892:2167": "kṛṣako'pyevamaśūdro dvādaśāhena śuddhyati |",
  "V05n2892:2171": "dvādaśāho'gnipūjāstutipekṣavidhireva ca ||6 ||",
  "V05n2892:2178": "yathedaṃ śāvamaśaucaṃ sapiṇḍeṣu vidhīyate |",
  "V05n2892:2182": "jananyapyavamevasyānnipuṇā śuddhimicchatā ||10 ||",
  "V05n2892:2189": "sarveṣāṃ śrāvamāṣau ca mātāpitrostu sūtakaṃ |",
  "V05n2892:2193": "sutakaṃ māturevasyād upaspṛśyetpitā śuciḥ ||11 ||",
  "V05n2892:2200": "putrajāte pituḥsnānaṃ sacailaṃ tu vidhīyate |",
  "V05n2892:2204": "mātāśuddhyai daśāhena ācāryasya śanaiḥ pituḥ ||12 ||",
  "V05n2892:2211": "bāladeśāntarasthe ca pṛthakpiṇḍe susaṃsthite | (34)",
  "V05n2892:2224": "sarvāsājalamāplutya sadya eva viśuddhyati ||13 ||",
  "V05n2892:2231": "svamurayo bhaginyāśca mātulānāṃ ca mātule |",
  "V05n2892:2235": "pituḥ śvasuri lepeta pakṣaṇi kṣapayenniśām ||14 ||",
  "V05n2892:2242": "divākīrtimamaladañca patitaṃ mṛttikāṃ tathā |",
  "V05n2892:2246": "śavāntasya spṛṣṭiṃ ca spṛṣṭvā snānena śuddhyati ||15 ||",
  "V05n2892:2253": "rajasvalāyā pretāyā namaskārādikā kriyā |",
  "V05n2892:2257": "urdvatrinātra saṃsnāpya sarvadharmeṣu jñāpayet ||16 ||",
  "V05n2892:2264": "anyagotrāpyasaṃvarddhaḥ pretāgniṃ tu dadāti yaḥ |",
  "V05n2892:2268": "udakāgnipiṇḍadānañca daśāhaṃ sadyaḥ snāpayaḥ ||17 ||",
  "V05n2892:2275": "yathaitāni vākyāni sarveṣāṃ eva varṇānāṃ sādhāraṇāni",
  "V05n2892:2279": "tathaiva ya viśeṣapratipādakāni api draṣṭavyāniti",
  "V05n2892:2280": "viśeṣā pramāṇābhāvāditi ||18 ||",
  "V05n2892:2287": "antarddaśāhasyātāñca puna maraṇajukāmī |",
  "V05n2892:2291": "tāvadekā śucirbhaktyā yāvannirayādanirdiśam ||19 ||",
  "V05n2892:2298": "mātaryagrapramātāyāmaśuddhyāśriyato'pi vā |",
  "V05n2892:2302": "pituḥ śeṣaiḥ śuddhyeta mātuḥ kuryāñca yakṣiṇī ||20 ||",
  "V05n2892:2309": "maraṇe maraṇe naiva sutuke mṛtake na tu ||",
  "V05n2892:2313": "ubhayorapi yatpūrvaṃ tenāśaucena śuddhyati ||21 ||",
  "V05n2892:2320": "mṛtena ca śucirjātaṃ śavaḥ sūtyanna śuddhyati ||",
  "V05n2892:2324": "guruṇā laghuśuddhena na laghunāmaca gurum ||22 ||",
  "V05n2892:2331": "sutake mṛtake vā syānmṛtake sutakaṃ tathā |",
  "V05n2892:2335": "śavena śuddhyate'śucirna śūddhyā śuddhyate śavaḥ ||23 ||",
  "V05n2892:2342": "vigataṃ tu videśasthaṃ śṛṇuyā dyojyanirdiśam |",
  "V05n2892:2346": "tacchreyaṃ daśarātraṃ syāttāvadeva śucirbhavet ||24 ||",
  "V05n2892:2353": "nirdeśajñātimaraṇaṃ śrutvā putrasya janma ca |",
  "V05n2892:2357": "sayāsājalamāsubhyaḥ śuddho bhavati māvati ||25 || (35)",
  "V05n2892:2370": "mahāgurunipāte tu ārdravastre pradhāya ca |",
  "V05n2892:2374": "atīte ke'pi kartavyaṃ pretakāryaṃ yathāvidhi ||26 ||",
  "V05n2892:2381": "pita-paścācca atītāyāṃ mātṛvajraṃ tu mānavaḥ |",
  "V05n2892:2385": "saṃvatsare vyatīte'pi trirātramaśucirbhavet ||27 ||",
  "V05n2892:2392": "kṣetriṇīcchudradāyādā yasya viprasya bāndhavāḥ |",
  "V05n2892:2396": "teṣāmaśauce viprasya daśāhāt śuddhiriṣyate ||28 ||",
  "V05n2892:2403": "rājasya vaiśyavadhyatve hīnayoniṣu bandhuṣu |",
  "V05n2892:2407": "svamavaśaucaṃ kuryāntā viśuddhayarthaṃ na saṃśayaḥ ||29 ||",
  "V05n2892:2414": "sarvavṛttamavarṇānāṃ śaucaṃ kuryācca mātṛvaḥ |",
  "V05n2892:2418": "tadvarṇavidhidṛṣṭena svasvaśaucaṃ svayoniṣu ||30 ||",
  "V05n2892:2425": "yadyekajjātā bahavaḥ pṛthakakarṇānakarṇikaḥ |",
  "V05n2892:2429": "teṣāṃ tu paitṛkaṃ śaucaṃ pituryuparatra pṛthak ||31 ||",
  "V05n2892:2436": "varṇānāmānupūrvyeṇa strīṇāṃ eko yadā patiḥ |",
  "V05n2892:2440": "daśārhaṣaṭadehekāhātprasavetsutakaṃ",
  "V05n2892:2441": "bhavet ||32 ||",
  "V05n2892:2448": "mṛte sute tu dāsānāṃ patnīnāṃ cānuromataḥ |",
  "V05n2892:2452": "svāmimukhyā bhavecchaucaṃ mṛte svāmini",
  "V05n2892:2453": "paunakam ||33 ||",
  "V05n2892:2460": "anyapūrvaviruddhāśca ahācchuddhyanti bāndhavāḥ |",
  "V05n2892:2464": "tāsvatāsvanyaparvāsu pañcāhā śuddhiriṣyate ||34 ||",
  "V05n2892:2471": "ādiṣṭo modakaṃ kuryād āgatasya samarpaṇāt |",
  "V05n2892:2475": "sapte bhūmodakaṃ kuryāttrirātramaśucirbhavet ||35 ||",
  "V05n2892:2482": "na rājñā madyadoṣāstrīvratīnāṃ na ca kṣatriṇām |",
  "V05n2892:2486": "aindrasthānamupāsinabrāhmaṇā yadi te smṛtaḥ ||36 ||",
  "V05n2892:2493": "vyathā saṃkarajātānāṃ pravrajyāsu ca tiṣṭhatām |",
  "V05n2892:2497": "ātmanestyāgitāṃ caiva nivartatodakakriyā ||36 ||",
  "V05n2892:2504": "pāṣaṇḍāṇāśritāyāñca bhūbhṛghnāḥ kāmagāstathā |",
  "V05n2892:2508": "surapya ātmatyāgibhyo nāsau codakabhojanā ||38 || (36)",
  "V05n2892:2521": "vidyugo nṛpaviprā hi śṛṃgī duṣyengighātitā ||",
  "V05n2892:2525": "vyathenyannātmajaklībo vratīnevodakorhakāḥ ||39 ||",
  "V05n2892:2532": "yadi kaścitprasādena śriyate'gnikādinā |",
  "V05n2892:2536": "aśaucaṃ tasya kartavyaṃ kartavyaṃ codakakriyāḥ ||40 ||",
  "V05n2892:2543": "cāṇḍāladudakātsarpyā ................ brāhmaṇādapi || ?",
  "V05n2892:2547": "dṛṣṭibhyaśca paśubhyaśca maraṇasyāpakarmaṇām ||41 ||",
  "V05n2892:2554": "sarvaviprahatānāśca śṛgīdṛṣṭisarinṛpaiḥ |",
  "V05n2892:2558": "svamātmātyāgināṃ caiva śā mepānnakārayet ||42 ||",
  "V05n2892:2565": "udakaṃ piṇḍadānaṃ ca gurubhyo yatpradīyate |",
  "V05n2892:2569": "nopatiṣṭhanti tatsarvaṃ antarīkṣaṃ vilīyate ||43 ||",
  "V05n2892:2576": "avṛtte daśarātre tu pañcatvaṃ yadi gacchati |",
  "V05n2892:2580": "mātu viprāvikaścaiva pitā snānena śuddhyati ||44 ||",
  "V05n2892:2587": "dāsādāsaṃ ca sarvādi yasya varṇasya yā bhavet |",
  "V05n2892:2591": "tadvarṇasya ca vai śaucaṃ dāsyāmāśraśca sūtakam ||45 ||",
  "V05n2892:2598": "durbhikṣarāṣṭrasaṃpāte āpatkāle viśeṣataḥ |",
  "V05n2892:2602": "upasargamṛtaṃ caiva sadyaḥ śaucaṃ vidhīyate ||46 ||",
  "V05n2892:2609": "jīvo jāto yadi preyāt mṛto vā jāyate yadi |",
  "V05n2892:2613": "sutakaṃ tatra kartavyaṃ iti dharmavyavasthitiḥ ||47 ||",
  "V05n2892:2620": "daśāhābhyantare naṣṭe bāle tadīyabāndhavaiḥ |",
  "V05n2892:2624": "sovā śaucaṃ na kartavyaṃ śuciḥ śaucena śuddhyati ||48 ||",
  "V05n2892:2631": "atha śrāddhavidhimārabhyahna",
  "V05n2892:2638": "pituḥ putreṇa kartavyāḥ piṇḍadānodakakriyāḥ |",
  "V05n2892:2642": "putrābhave tu patnī syād patnyābhāve ca sodaraḥ ||1 ||",
  "V05n2892:2649": "varṣe varṣe hi kartavyaṃ mātāpitrostu tāḥ kriyāḥ |",
  "V05n2892:2653": "adevaṃ bhojayet śrāddhe piṇḍamekaṃ tu",
  "V05n2892:2654": "nirvahet ||2 || (37)",
  "V05n2892:2667": "bhāryāpiṇḍaṃ patirdadyāt bharturbhāyā tathaiva",
  "V05n2892:2668": "ca |",
  "V05n2892:2672": "svasrādiṣu tathaiva syāt tadabhāve tu savratiḥ ||3 ||",
  "V05n2892:2679": "aputrāḥ ye mṛtāḥ kecit striyo vā puruṣā api |",
  "V05n2892:2683": "teṣāmapi ca deyaṃ syāt eva koddiṣṭapārvaṇam ||4 ||",
  "V05n2892:2690": "nityaṃ naimittikaṃ kāryaṃ vṛddhiśrāddhe athāparam |",
  "V05n2892:2694": "pārvaṇaṃ ceti vijñeyā śrāddhapañcavidhāḥ budhaiḥ ||5 ||",
  "V05n2892:2701": "palyurvāhnevikaṃ śrāddhe anarāhne ca paitṛkam |",
  "V05n2892:2705": "eko diṣṭaṃ ca madhyāhne prātaḥvṛddhinimittakam ||6 ||",
  "V05n2892:2712": "kriyāvidhijñāmācāryasubhuktamapabhojayet |",
  "V05n2892:2716": "na tu mūrkhanirāhāramathavā bhojayet",
  "V05n2892:2717": "sukham ||7 ||",
  "V05n2892:2724": "śrāddhavighne samutpanne mṛtasya vidhitejine |",
  "V05n2892:2728": "amāvāsyā tu kartavyā śuddho vāpi viśeṣataḥ ||8 ||",
  "V05n2892:2735": "snānaṃ caiva mahādānaṃ svādhyāyañcānyatarpaṇam |",
  "V05n2892:2739": "abdamekaṃ na kurvīta mahāgurunipātane ||9 ||",
  "V05n2892:2746": "kalamāśca tilā nāgā dāśīkṣitirathāgṛham |",
  "V05n2892:2750": "kanyā ca kapilāyā va mahādānāni yai daśa ||10 ||",
  "V05n2892:2757": "adhimāso na kartavyaḥ śrāddhasāṃvatsarādikam |",
  "V05n2892:2761": "varṣavṛddhyābhiṣekādi kartavyaṃ tvadhikena",
  "V05n2892:2762": "tu ||11 ||",
  "V05n2892:2769": "praśastānyapi māseṣu kartavyāni mahātmabhiḥ |",
  "V05n2892:2773": "apraśastaṃ na kurvīta cātmānaṃ śeṣamicchatā ||12 ||",
  "V05n2892:2780": "tāmbūlañca payaḥpānaṃ puṣpamaṅgānulepanam |",
  "V05n2892:2784": "upavāsena duṣyanti dantadhāvanamañjuno ||13 ||",
  "V05n2892:2791": "na mātuśca pṛthak śrāddhaṃ ācāryapravikīrtitam |",
  "V05n2892:2795": "pitṛpiṇḍodake pātre sādhvī tatrāgrahāriṇī ||14 ||",
  "V05n2892:2802": "ye cāste vikule jātā aputrāya ca bāndhavāḥ |",
  "V05n2892:2806": "virūpā ātmagarbhā ca jñātājñātakule mama ||15 || (38)",
  "V05n2892:2819": "bhūmau dattena tṛpyantu tatprayāntu parāgatim |",
  "V05n2892:2823": "saṃskārahīnamārgasaṃśodhanāya kākādi kākasaṃskārādi",
  "V05n2892:2827": "snānādi snānavikāle piṇḍaṃ dadāmityabhyasvadhāṅgam ||",
  "V05n2892:2834": "mṛtamuddiśca payaḥdattaṃ ācāryāya svabandhubhiḥ |",
  "V05n2892:2838": "tasmai dattaṃ iti jñeyaṃ pāyeyaṃ svaryāntasya tat ||17 ||",
  "V05n2892:2845": "saptāhā prāk pradātavyaṃ ........ bandhubhiḥ |",
  "V05n2892:2849": "tena dānena yāvasya sukhāvatyāṃ gṛhīyate ||18 ||",
  "V05n2892:2856": "gomūtraṃ gomayaṃ kṣīraṃ dadhisarpikaśodakam |",
  "V05n2892:2860": "nirdiṣṭaṃ pañcagavyaṃ tu pavitraṃ kāyaśodhanam ||19 ||",
  "V05n2892:2867": "nīlāyāścaiva gomūtraṃ kṛṣṇāyā gomayaṃ bhavet |",
  "V05n2892:2871": "tāmravarṇāpayaścaiva śuklāyāḥ surabheḥ dadhi ||",
  "V05n2892:2878": "kapilāyāḥ dhṛtaṃ grāhyaṃ mahāpātakanāśanam |",
  "V05n2892:2882": "abhāve sarvavarṇānāṃ kapilāyāḥ viśeṣataḥ ||20 ||",
  "V05n2892:2889": "kapilāyā ato vastu yathālabdhaṃ samācaret |",
  "V05n2892:2893": "gomūtre sakalaṃ dadyāt aguṣṭārddhaṃ tu gomayam |",
  "V05n2892:2897": "kṣiraṃ saptapalaṃ dadyāt dadhi pañcapalāni ca ||",
  "V05n2892:2904": "mṛtamekapalaṃ dadyāt ācamanaṃ tīrthodakam |",
  "V05n2892:2908": "tāmrapatre sthite kṛtvā caitatsarvavidhānataḥ ||",
  "V05n2892:2912": "anyatrāpihna",
  "V05n2892:2916": "evaṃ goghṛtagomayagomūtrapalamekaṃ prakīrtitam |",
  "V05n2892:2920": "kṣīrasaptapalaṃ dadyāt dadhi pañcapalāni ca",
  "V05n2892:2924": "maitre pañcapalāni ca maitre ravisthitaṃ kuryāt",
  "V05n2892:2925": "kalyāṇavidhinā yathā ||",
  "V05n2892:2929": "bhavyāṃ gurūpadeśena dadyāttīrthāmbunā saha |",
  "V05n2892:2933": "sarvapāpavināśāya pūjārthaṃ pavitāya ca ||",
  "V05n2892:2940": "mahākāruṇikānātha ,",
  "V05n2892:2941": "dehi me gavyapañcakam |",
  "V05n2892:2945": "kāyavākvittaśuddhyarthaṃ durgateḥ śodhanāya",
  "V05n2892:2946": "ca || (39)",
  "V05n2892:2959": "mahākāruṇikānātha ,",
  "V05n2892:2960": "dehi me gavyapañcakam |",
  "V05n2892:2964": "aśeṣajinasaṃbhūtaṃ sarvadhātuviśodhanam |",
  "V05n2892:2968": "mahākāruṇikānātha ,",
  "V05n2892:2969": "dehi me mavyapañcakam ||22 ||",
  "V05n2892:2976": "gomūtrasyaikapalakaṃ aguṣṭārddhena gomayam |",
  "V05n2892:2980": "kṣiraṃ",
  "V05n2892:2981": "saptapalaṃ dadyāt daghna stripalamucyate ||",
  "V05n2892:2988": "āpayasyaikapalaṃ dadyāt palamekaṃ kuśodakam |",
  "V05n2892:2992": "sarpiśopamaścaiva pṛthaṅ miśreṇābhimiśrayet ||",
  "V05n2892:2999": "gaṇajyeṣṭhasya hastena dadyāt ca gavyapañcakam |",
  "V05n2892:3003": "etena śuddhyate kāyaṃ mano'tha bhojya dātave ||24 ||",
  "V05n2892:3010": "tatpūjayedyathāśakti cīvarādi viśeṣataḥ |",
  "V05n2892:3014": "pūjyaṃ pañcopacāreṇa kāyavākbhaktivetana",
  "V05n2892:3015": "iti ||25 ||",
  "V05n2892:3022": "anena vai ||",
  "V05n2892:3023": "oṃ hruṃ hrāṃ hrīṃ aḥ ||",
  "V05n2892:3027": "mantrena aṣṭottaraśatavāraṃ japet ||",
  "V05n2892:3031": "ahorātropitatsnānaṃ prāṅmukhe tatsamaṃ pibet |",
  "V05n2892:3035": "pañcagavyaṃ sakṛtpītvā sanmantrābhiṣṭitaṃ śubham ||26 ||",
  "V05n2892:3042": "sarvapāpavinirmuktaḥ śuddho bhavati mānavaḥ ||",
  "V05n2892:3046": "iti prāyaścittavidhau śaucācāravidhe śrāddhaprakaraṇamiti",
  "V05n2892:3047": "samāptam ||",
  "V05n2892:3053": "(40)"
}