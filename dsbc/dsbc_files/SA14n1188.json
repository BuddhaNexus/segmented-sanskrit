{
  "SA14n1188:0": "pāramitāsamāsaḥ",
  "SA14n1188:1": "1. dānapāramitāsamāsaḥ",
  "SA14n1188:2": "namo buddhāya ||",
  "SA14n1188:3": "tathāgatānāṃ padam āruru-",
  "SA14n1188:4": "kṣurāśritya ratnatrayam ādareṇa |",
  "SA14n1188:5": "bodhau nidhāyāvicalaṃ manaśca",
  "SA14n1188:6": "kuryāt parātmavyatihāram ādau || 1 ||",
  "SA14n1188:7": "tataḥ paraṃ dānavidhau prayogaḥ",
  "SA14n1188:8": "kāryastathā lokahitonmukhena |",
  "SA14n1188:9": "yathā svagātrāṇyapi yācitasya",
  "SA14n1188:10": "na yogasaṃkocavirūpatā syāt || 2 ||",
  "SA14n1188:11": "mātsaryadoṣopacayāya yat syān",
  "SA14n1188:12": "na tyāgacittaṃ paribṛṃhayed vā |",
  "SA14n1188:13": "tattyaktumevārhati bodhisattvaḥ",
  "SA14n1188:14": "parigrahacchadmamayaṃ vighātam || 3 ||",
  "SA14n1188:15": "tad bodhisattvaḥ katham ādadīta",
  "SA14n1188:16": "ratnaṃ dhanaṃ vā divi vāpi rājyam |",
  "SA14n1188:17": "yat tyāgacittapratipakṣadakṣaṃ",
  "SA14n1188:18": "saṃbodhimārgāvaraṇaṃ karoti || 4 ||",
  "SA14n1188:19": "saṃsmṛtya caryātiśayaṃ munīnāṃ",
  "SA14n1188:20": "tadunmukhīṃ svāmapi ca pratijñām |",
  "SA14n1188:21": "parigrahasnehavinigrahārthaṃ",
  "SA14n1188:22": "kuryād imāṃścetasi sadvitarkān || 5 ||",
  "SA14n1188:23": "yadā nisṛṣṭo jagate mayāyaṃ",
  "SA14n1188:24": "kāyo'pī tattyāgakṛto'pi dharmaḥ |",
  "SA14n1188:25": "bāhye tadā vastuni saṅgacittaṃ",
  "SA14n1188:26": "na me gajasnānam ivānurūpam || 6 ||",
  "SA14n1188:27": "māṃsārthino māṃsamidaṃ harantu",
  "SA14n1188:28": "majjānamapyuddharaṇāt tadarthī |",
  "SA14n1188:29": "ahaṃ hi lokārthamidaṃ bibharmi",
  "SA14n1188:30": "śarīrakaṃ kiṃ bata vastu bāhyam || 7 ||",
  "SA14n1188:31": "yathaiva bhaiṣajyamahīruhasya",
  "SA14n1188:32": "tvakpattrapuṣpādi janā haranti |",
  "SA14n1188:33": "madīyamete'paharanti ceti",
  "SA14n1188:34": "naivaṃ vikalpāḥ samudācaranti || 8 ||",
  "SA14n1188:35": "tathaiva lokārthasamudyatena",
  "SA14n1188:36": "svalpo'pi kāryo na mayā vikalpaḥ |",
  "SA14n1188:37": "duḥkhe kṛtaghne satatāśucau ca",
  "SA14n1188:38": "dehe parasmāyupayujyamāne || 9 ||",
  "SA14n1188:39": "ādhyātmike caiva mahījalādye",
  "SA14n1188:40": "bāhye mahābhūtagaṇe ca tulye |",
  "SA14n1188:41": "idaṃ mamedaṃ na mameti ko'yam",
  "SA14n1188:42": "ajñānapaṅkāṅkavidhirmayāpi || 10 ||",
  "SA14n1188:43": "gṛhṇīta gātrāṇyapi me yatheṣṭaṃ",
  "SA14n1188:44": "mā kārṣurasmin parakīyabuddhim |",
  "SA14n1188:45": "yuṣmākameva svamidaṃ kimarthaṃ",
  "SA14n1188:46": "nātmābhimāno mama kaścidatra || 11 ||",
  "SA14n1188:47": "ityadbhutā yasya bhavantyabhīkṣṇaṃ",
  "SA14n1188:48": "saṃbuddhabhāvānuguṇā vitarkāḥ |",
  "SA14n1188:49": "taṃ bodhisattvātiśayaṃ vadanti",
  "SA14n1188:50": "buddhā mahāsattvamacintyasattvāḥ || 12 ||",
  "SA14n1188:51": "evaṃ sa dānapratipattiśūraḥ",
  "SA14n1188:52": "karoti kāye'pi na jātvapekṣām |",
  "SA14n1188:53": "tasyāprayatnādupayānti śuddhiṃ",
  "SA14n1188:54": "karmāṇi vākkāyamanomayāni || 13 ||",
  "SA14n1188:55": "viśuddhakarmā ca hitaṃ pareṣām",
  "SA14n1188:56": "āyāsaduḥkhena vinā karoti |",
  "SA14n1188:57": "itthaṃ sa sattvārthamabhiprayatno",
  "SA14n1188:58": "nayānaye kauśalamabhyupaiti || 14 ||",
  "SA14n1188:59": "bhūyastaraṃ prāpya balaṃ sa dānāt",
  "SA14n1188:60": "saddharmadānena tataḥ karoti |",
  "SA14n1188:61": "bhavāndhakāre bhramatāṃ janānāṃ",
  "SA14n1188:62": "sūryodayāt spaṣṭataraṃ prakāśam || 15 ||",
  "SA14n1188:63": "sādhāraṇī lokahitārthasiddhiḥ",
  "SA14n1188:64": "sarvajñabhāvābhyudayapratiṣṭhā |",
  "SA14n1188:65": "ato'sya puṇyākṣayatābhyudeti",
  "SA14n1188:66": "prabheva bhānorudayasthitasya || 16 ||",
  "SA14n1188:67": "ityadbhutā dānamayā guṇaughā",
  "SA14n1188:68": "ye bodhisattvābharaṇībhavanti |",
  "SA14n1188:69": "tasmāt tadīyaṃ parikarma cittaṃ",
  "SA14n1188:70": "dānasya kāruṇyapuraḥsarasya || 17 ||",
  "SA14n1188:71": "āyuḥpratībhānabalādi bauddhaṃ",
  "SA14n1188:72": "niṣpādayeyaṃ jagatāmanena |",
  "SA14n1188:73": "sattvā mayā cāmiṣasaṃgṛhītāḥ",
  "SA14n1188:74": "saddharmapātrāṇyapi me bhaveyuḥ || 18 ||",
  "SA14n1188:75": "ityannadānaṃ pradadāti vidvān",
  "SA14n1188:76": "na svargasaṃpattiparigrahāya |",
  "SA14n1188:77": "pānānyapi kleśatṛṣaḥ śamāya",
  "SA14n1188:78": "lokasya lokārthacaro dadāti || 19 ||",
  "SA14n1188:79": "bauddhasya caivarddhiviceṣṭitasya",
  "SA14n1188:80": "nirvāṇasaukhyasya ca sarvalokaḥ |",
  "SA14n1188:81": "lābhī kathaṃ syāditi lokanātho",
  "SA14n1188:82": "yānaṃ mahāyānaratirdadāti || 20 ||",
  "SA14n1188:83": "saṃbuddhavarṇasya ca hemabhāso",
  "SA14n1188:84": "lajjāmayasyaiva ca bhūṣaṇasya |",
  "SA14n1188:85": "niṣpattaye vastravidhīnudārān",
  "SA14n1188:86": "satkṛtya kālānuguṇaṃ dadāti || 21 ||",
  "SA14n1188:87": "saṃbodhimaṇḍāsanam āsanāni",
  "SA14n1188:88": "śayyāśca śayyātrayam īkṣamāṇaḥ |",
  "SA14n1188:89": "sarvajñacakṣuḥpratilabdhaye ca",
  "SA14n1188:90": "caityeṣu rathyāsu ca dīpamālām || 22 ||",
  "SA14n1188:91": "vādyāni divyaśrutisaṃgrahārthaṃ",
  "SA14n1188:92": "saṃbuddhaśīlāya ca gandhadānam |",
  "SA14n1188:93": "sabhāprapārāmavihāragehāñ",
  "SA14n1188:94": "śaraṇyabhāvābhimukho dadāti || 23 ||",
  "SA14n1188:95": "dānaṃ rasānāṃ tu susaṃskṛtāṇāṃ",
  "SA14n1188:96": "rasārasāgratvaparigrahāya |",
  "SA14n1188:97": "bhaiṣajyadānānyajarāmaratvaṃ",
  "SA14n1188:98": "lokān imān prāpayituṃ dadāti || 24 ||",
  "SA14n1188:99": "bhujiṣyatāmātmasamaṃ ninīṣurdāśī-",
  "SA14n1188:100": "kṛtān kleśagaṇena lokān |",
  "SA14n1188:101": "sa dāsadāsyādi sadā dadāti",
  "SA14n1188:102": "dāsānudāsānaparākariṣyan || 25 ||",
  "SA14n1188:103": "dadāti putrān duhitṛḥ priyāśca",
  "SA14n1188:104": "bodhipriyatvādanavadyadānam |",
  "SA14n1188:105": "ekāntasaddharmaratipriyaśca",
  "SA14n1188:106": "krīḍāviśeṣān ratihetubhūtān || 26 ||",
  "SA14n1188:107": "suvarṇamuktāmaṇividrumādīn",
  "SA14n1188:108": "dadāti sallakṣaṇasaṃpadartham |",
  "SA14n1188:109": "ratnapradīptāni ca bhūṣaṇāni",
  "SA14n1188:110": "citrāṇyanuvyañjanasauṣṭhavāya || 27 ||",
  "SA14n1188:111": "dhyānārthamudyānatapovanāni",
  "SA14n1188:112": "saddharmakoṣāya ca vittakoṣam |",
  "SA14n1188:113": "munīndrarājyāya dadātyakhinno",
  "SA14n1188:114": "rājyāni cājñāpanamaṇḍitāni || 28 ||",
  "SA14n1188:115": "cakrāṅkitābhyāṃ caraṇottamābhyām",
  "SA14n1188:116": "saṃbodhimaṇḍākramaṇotsukatvāt |",
  "SA14n1188:117": "sa nirvikāraścaraṇapradānaṃ",
  "SA14n1188:118": "lokārthaniṣpattikaro dadāti || 29 ||",
  "SA14n1188:119": "duḥkhāpagāyāmatiśīghragāyāṃ",
  "SA14n1188:120": "magnasya lokasya kathaṃ na dadyām |",
  "SA14n1188:121": "saddharmahastāniti saṃpradatte",
  "SA14n1188:122": "hastānvikoṣāmburuhaprakāśān || 30 ||",
  "SA14n1188:123": "śraddhendriyādipratipūraṇārthaṃ",
  "SA14n1188:124": "sa karṇanāsādi dadātyakhinnaḥ |",
  "SA14n1188:125": "cakṣuśca cakṣurvimalīkariṣyaṃ-",
  "SA14n1188:126": "llokasya sarvāvaraṇaprahāṇāt || 31 ||",
  "SA14n1188:127": "utkṛtya māṃsāni saśoṇitāni",
  "SA14n1188:128": "dadāti kāruṇyavaśena nāthaḥ |",
  "SA14n1188:129": "bhūmyagnivāyvambuvadeva me syāllo-",
  "SA14n1188:130": "kopajīvyaḥ katham eṣa kāyaḥ || 32 ||",
  "SA14n1188:131": "lokottamajñānasamāpanārthaṃ",
  "SA14n1188:132": "sa uttamāṅgairapi satkaroti |",
  "SA14n1188:133": "abhyāgatasyārthijanasya yācñāṃ",
  "SA14n1188:134": "prāgeva dehāvayavaistadanyaiḥ || 33 ||",
  "SA14n1188:135": "majjānamapyadbhutavīraceṣṭo",
  "SA14n1188:136": "dadāti lokasya kathaṃ na kuryām |",
  "SA14n1188:137": "tathāgataṃ vigrahamapradhṛṣyaṃ",
  "SA14n1188:138": "vṛṣṭyāpi vajrojjvalayā patantyā || 34 ||",
  "SA14n1188:139": "ityevamādyaṃ satatānavadyaṃ",
  "SA14n1188:140": "tadbodhisattvāmbudharapramuktam |",
  "SA14n1188:141": "prahlādya dānāmbu jagatsamagraṃ",
  "SA14n1188:142": "sarvajñatāsāgaramabhyupaiti || 35 ||",
  "SA14n1188:143": "anviṣya bhogānviṣameṇa nāsau",
  "SA14n1188:144": "dadāti notpīḍanayā parasya |",
  "SA14n1188:145": "na trāsalajjāpratikārahetorna",
  "SA14n1188:146": "dakṣinīyān parimārgamāṇaḥ || 36 ||",
  "SA14n1188:147": "na ca praṇīte sati rūkṣadānam",
  "SA14n1188:148": "adakṣiṇīyā iti vāvamanya |",
  "SA14n1188:149": "vipākakāṅkṣākṛpaṇīkṛtaṃ vā",
  "SA14n1188:150": "satkārahīnaṃ vijugupsitaṃ vā || 37 ||",
  "SA14n1188:151": "naivonnatiṃ śīlavate prayacchan",
  "SA14n1188:152": "viparyayaṃ gacchati netarasmai |",
  "SA14n1188:153": "nātmānamutkarṣati naiva nindāṃ",
  "SA14n1188:154": "karoti so'nyasya samaprayogaḥ || 38 ||",
  "SA14n1188:155": "na cāsya mithyāśayadānamasti",
  "SA14n1188:156": "naivāstyanadhyāśayadānamasya |",
  "SA14n1188:157": "na krodhadoṣopahataṃ dadāti",
  "SA14n1188:158": "naivānutāpaṃ kurute sa dattvā || 39 ||",
  "SA14n1188:159": "na ślāghyamāno vipulaṃ dadāti",
  "SA14n1188:160": "nāślāghyamāno'nyataraṃ dadāti |",
  "SA14n1188:161": "na yācakānāmupaghātadānaṃ",
  "SA14n1188:162": "yad vā bhaved vipratipattihetuḥ || 40 ||",
  "SA14n1188:163": "nākāladānaṃ sa dadāti kiṃcid",
  "SA14n1188:164": "dadāti kāle viṣame'pi naiva |",
  "SA14n1188:165": "na devabhāvāya na rājyahetorna",
  "SA14n1188:166": "hīnayānaspṛhayālubhāvāt || 41 ||",
  "SA14n1188:167": "nāsau mukhollokanayā dadāti",
  "SA14n1188:168": "na kīrtiśabdāya na hāsyahetoḥ |",
  "SA14n1188:169": "paryāptametacca mameti naivaṃ",
  "SA14n1188:170": "yadvā vihiṃsāhasitaṃ pareṣām || 42 ||",
  "SA14n1188:171": "sarvajñabhāvāpariṇāmitaṃ vā",
  "SA14n1188:172": "sagarhitaṃ vā sa dadāti naiva |",
  "SA14n1188:173": "tato'sya tat pāramitābhidhānaṃ",
  "SA14n1188:174": "parāṃ viśuddhiṃ samupaiti dānam || 43 ||",
  "SA14n1188:175": "dānodbhavaṃ tasya ca puṇyarāśiṃ",
  "SA14n1188:176": "lokāt samagrādapi piṇḍitāni |",
  "SA14n1188:177": "puṇyāni naivābhibhavanti yasmāllo-",
  "SA14n1188:178": "kottamattvaṃ sa tato'bhyupaiti || 44 ||",
  "SA14n1188:179": "pañcasvabhijñāsu viniścitātmā",
  "SA14n1188:180": "lokāya yadvarṣati dānavarṣam |",
  "SA14n1188:181": "samantatastasya kutaḥ pramāṇaṃ",
  "SA14n1188:182": "parikṣayo vā satatapravṛtteḥ || 45 ||",
  "SA14n1188:183": "yadakṣayāṇāṃ jagatāṃ hitāya",
  "SA14n1188:184": "jñānasya hetuśca yadakṣayasya |",
  "SA14n1188:185": "traidhātukena kṣayiṇā na tacca",
  "SA14n1188:186": "saṃlipyate vyomavadambudena || 46 ||",
  "SA14n1188:187": "tacchūnyatākārasamāhitaṃ ca",
  "SA14n1188:188": "nimittadoṣaiḥ parivarjitaṃ ca |",
  "SA14n1188:189": "akiṃcanakleśaviyogasiddheste-",
  "SA14n1188:190": "nākṣayaṃ tatkathitaṃ munīndraiḥ || 47 ||",
  "SA14n1188:191": "asmin punaḥ satpuruṣāvadāne",
  "SA14n1188:192": "dāne nidāne sukhavistārāṇām |",
  "SA14n1188:193": "cikīrṣatā yogamanityasaṃjñā",
  "SA14n1188:194": "bhogeṣu kāryā karuṇā ca loke || 48 ||",
  "SA14n1188:195": "bhogānanityānabhivīkṣamānaḥ",
  "SA14n1188:196": "sātmyaṃ gatāyāṃ ca tataḥ kṛpāyām |",
  "SA14n1188:197": "sa niścayaṃ gacchati dīyate yad",
  "SA14n1188:198": "etān madīyāṃ na tu yadgṛhe me || 49 ||",
  "SA14n1188:199": "yaddattam asmān na bhayaṃ kadā cid",
  "SA14n1188:200": "gehe yadasmādbhayamabhyupaiti |",
  "SA14n1188:201": "sādhāraṇaṃ rakṣyamatarpakaṃ ca",
  "SA14n1188:202": "datte tu naite prabhavantyanarthāḥ || 50 ||",
  "SA14n1188:203": "sukhaṃ paratrāpi karoti dattam",
  "SA14n1188:204": "ihaiva duḥkhaṃ prakarotyadattam |",
  "SA14n1188:205": "ulkāsvabhāvaṃ hi dhanaṃ narāṇām",
  "SA14n1188:206": "atyajyamānaṃ vyasanaṃ dadāti || 51 ||",
  "SA14n1188:207": "adīyamānaṃ nidhanaṃ prayāti",
  "SA14n1188:208": "nidhānatāṃ yāti hi dīyamānam |",
  "SA14n1188:209": "dhanasya niḥsāralaghoḥ sa sāro",
  "SA14n1188:210": "yaddīyate lokahitonmukhena || 52 ||",
  "SA14n1188:211": "yaddattametadviduṣāṃ praśasyaṃ",
  "SA14n1188:212": "bālo janastannicayapraśaṃsī |",
  "SA14n1188:213": "prāyo viyogo hi parigrahebhyo",
  "SA14n1188:214": "dānādbhavatyabhyudayo yaśaśca || 53 ||",
  "SA14n1188:215": "dattaṃ na tatkleśaparigrahāya",
  "SA14n1188:216": "kleśāya mātsaryamanāryadharmaḥ |",
  "SA14n1188:217": "yaddīyate satpatha eṣa tasmād",
  "SA14n1188:218": "ato'nyathā kāpathamāhurāryāḥ || 54 ||",
  "SA14n1188:219": "abhyāgate yācanake ca tena",
  "SA14n1188:220": "saṃbodhisaṃbhāravivṛddhihetau |",
  "SA14n1188:221": "tatpreṣyasaṃjñātmani saṃniveśyā",
  "SA14n1188:222": "kalyāṇamitrapriyatā ca tasmin || 55 ||",
  "SA14n1188:223": "mahātmanāṃ yatpratanūbhavanti",
  "SA14n1188:224": "rāgādayo yācanakānniśamya |",
  "SA14n1188:225": "tenotsavābhyāgamamapyatītya",
  "SA14n1188:226": "teṣāṃ priyaṃ yācanakopayānam || 56 ||",
  "SA14n1188:227": "sa cetpunaryācanake'pi labdhe",
  "SA14n1188:228": "dātuṃ na śaknotyatidurbalatvāt |",
  "SA14n1188:229": "tenānuneyo madhureṇa sāmnā",
  "SA14n1188:230": "sa yācakaḥ syānna yathā samanyuḥ || 57 ||",
  "SA14n1188:231": "kāryaśca mātsaryavinigrahāya",
  "SA14n1188:232": "mohaprahāṇāya ca tena yatnaḥ |",
  "SA14n1188:233": "tathā yathā yācanakaḥ kadā cid",
  "SA14n1188:234": "vaimukhyadīno na tato vyāpaiti || 58 ||",
  "SA14n1188:235": "saṃbodhicittaṃ kuta eva tasya",
  "SA14n1188:236": "dravye'pi yo matsaramabhyupaiti |",
  "SA14n1188:237": "vāsaḥ sucittasya hi nāsti doṣairambho-",
  "SA14n1188:238": "nidhānasya śavairyathaiva || 59 ||",
  "SA14n1188:239": "tasmāt tyaktvā sarvataḥ sarvadoṣān",
  "SA14n1188:240": "bodhiprārthī sarvadā sarvadaḥ syāt |",
  "SA14n1188:241": "trātuṃ lokānekavīraḥ kva cittaṃ",
  "SA14n1188:242": "ceṣṭā dainyānūrjiteyaṃ kva caiva || 60 ||",
  "SA14n1188:243": "mūlaṃ dānasyāsya saṃbodhicittaṃ",
  "SA14n1188:244": "tanna tyājyaṃ ditsatā dānamīdṛk |",
  "SA14n1188:245": "taṃ saṃbuddhāstyāgināmagramāhuryo",
  "SA14n1188:246": "lokeṣu tyāgamādhitsuragram || 61 ||",
  "SA14n1188:247": " || dānapāramitāsamāsaḥ ||"
}