{
  "S06n613:0": "22",
  "S06n613:1": "198. tasmā hu mānu nihanitvana paṇḍitena",
  "S06n613:2": "guruāśayena varabodhi gaveṣamāṇaḥ |",
  "S06n613:3": "vaidyo va ātura svarogacikitsanārthaṃ",
  "S06n613:4": "kalyāṇamitra bhajitavya atandritena ||1 ||",
  "S06n613:5": "199. buddhā ya bodhivaraprasthita bodhisattvā",
  "S06n613:6": "kalyāṇamitra imi pāramitā nidiṣṭāḥ |",
  "S06n613:7": "te cānuśāsaka iyaṃ pratipattibhūmī",
  "S06n613:8": "duvi kāraṇena anubudhyati buddhabodhim ||2 ||",
  "S06n613:9": "200. atikrāntanāgata jinā sthita ye diśāsu",
  "S06n613:10": "sarveṣu mārgu ayu pāramitā ananyo |",
  "S06n613:11": "obhāsa ulka varabodhayi prasthitānā-",
  "S06n613:12": "māloka śāstri imi pāramitā pradiṣṭāḥ ||3 ||",
  "S06n613:13": "201. yatha prajñapāramita śūnyata lakṣaṇena",
  "S06n613:14": "tathalakṣaṇā ya imi jānati sarvadharmān |",
  "S06n613:15": "śūnyānalakṣaṇa prajānayamāna dharmān",
  "S06n613:16": "evaṃ carantu caratī sugatāna prajñām ||4 ||",
  "S06n613:17": "202. āhārakāma parikalpayamāna sattvāḥ",
  "S06n613:18": "saṃsāri yuktamanasaḥ sada saṃsmaranti |",
  "S06n613:19": "ahu mahya dharma ubhi eti abhūta śūnyā",
  "S06n613:20": "ākāśagaṇṭhi ayu ātmana baddha bāle ||5 ||",
  "S06n613:21": "203. yatha śaṅkitena viṣasaṃjñata abhyupaiti",
  "S06n613:22": "no cāsya koṣṭhagatu so viṣu pātyate ca |",
  "S06n613:23": "emeva bālupagato ahu mahya eṣo",
  "S06n613:24": "ahasaṃjñi jāyi mriyate ca sadā abhūto ||6 ||",
  "S06n613:25": "204. yatha udgraho tatha prakāśitu saṃkileśo",
  "S06n613:26": "vyodāna ukta ahu mahya anopalabdhi |",
  "S06n613:27": "na hi atra kaści yo kliśyati śudhyate vā",
  "S06n613:28": "prajñāya pāramita budhyati bodhisattve ||7 ||",
  "S06n613:29": "205. yāvanta sattva nikhile iha jambudvipe",
  "S06n613:30": "te sarvi bodhivaracitta upādayitvā |",
  "S06n613:31": "dānaṃ daditva bahuvarṣasahasrakoṭīḥ",
  "S06n613:32": "sarvaṃ ca nāmayi jagārthanidāna bodhau ||8 ||",
  "S06n613:33": "206. yaścaiava prajñavarapāramitābhiyukto",
  "S06n613:34": "divasaṃ pi antamaśa ekanuvartayeyā |",
  "S06n613:35": "kalapuṇya so na bhavatī iha dānaskandho",
  "S06n613:36": "tadatandritena sada osaritavya prajñā ||9 ||",
  "S06n613:37": "207. caramāṇu prajñavarapāramitāya yogī",
  "S06n613:38": "mahatīṃ janeti karuṇāṃ na ca sattvasaṃjñā |",
  "S06n613:39": "tada bhonti sarvajagatī vidu dakṣiṇīyā",
  "S06n613:40": "satataṃ amoghu paribhuñjati rāṣṭrapiṇḍam ||10 ||",
  "S06n613:41": "208. cirabuddhadevamanujān triapāyi sattvān",
  "S06n613:42": "parimocituṃ ya iha icchati bodhisattvo |",
  "S06n613:43": "pṛthumārgu tīru upadarśayi sattvadhātau",
  "S06n613:44": "prajñāya pāramita yukta divā ca rātrau ||11 ||",
  "S06n613:45": "209. puruṣo ya agru ratanasya alabdhapūrvo",
  "S06n613:46": "aparasmi kāli puna labdhva bhaveya tuṣṭo |",
  "S06n613:47": "sa ha labdhva nāśayi puno'pi pramādabhūto",
  "S06n613:48": "nāśitva duḥkhi satataṃ ratanābhikāṅkṣī ||12 ||",
  "S06n613:49": "210. emeva bodhivaraprasthita ratnatulyo",
  "S06n613:50": "prajñāya pāramita yogu na riñcitavyo |",
  "S06n613:51": "ratanaṃ va labdhva gṛhamāṇu abhinnasattvo",
  "S06n613:52": "anubuddhayati tvarito śivamabhyupaiti ||13 ||",
  "S06n613:53": "bhagavatyāṃ ratnaguṇasaṃcayagāthāyāṃ kalyāṇamitraparivarto nāma dvāviṃśatitamaḥ ||"
}