{
    "1418:0": "ācāryanāgarjunapraṇītaḥ",
    "1418:1": "pañcakramaḥ",
    "1418:2": "[ 1 ]",
    "1418:3": "vajrajāpakramaḥ prathamaḥ",
    "1418:4": "oṃ namo buddhāya",
    "1418:5": "sarvabuddhātmakaṃ nāthaṃ natvā śrīmanmahāsukham|",
    "1418:6": "vajrajāpakramaṃ vakṣye yogatantrānusārataḥ||1||",
    "1418:7": "utpattikramasaṃsthānāṃ niṣpannakramakāṅkṣiṇām|",
    "1418:8": "upāyaścaiṣa saṃbuddhaiḥ sopānamiva nirmitaḥ||2||",
    "1418:9": "prāṇabhūtaśca sattvānāṃ vāyvākhyaḥ sarvakarmakṛt|",
    "1418:10": "vijñānavāhanaścaiṣa pañcātmā daśadhā punaḥ||3||",
    "1418:11": "vāyutattvānupūrveṇa mantratattvaṃ samāviśet|",
    "1418:12": "mantranidhyaptimāgamya vajrajāpaḥ suśikṣyate||4||",
    "1418:13": "vajrajāpasthito mantrī cittanidhyaptimāpnuyāt|",
    "1418:14": "mayopamasamādhistho bhūtakoṭyāṃ samāviśet||5||",
    "1418:15": "bhūtakoṭeḥ samuttiṣṭhannadvayajñānamāpnuyāt|",
    "1418:16": "yuganadvasamādhistho na kiñcicchakṣate punaḥ||6||",
    "1418:17": "ayaṃ niṣpannayogākhyo mahāvajradharaśca saḥ|",
    "1418:18": "sarvākāravaropetaḥ sarvajño jāyate tataḥ||7||",
    "1418:19": "anāgatamatītaṃ ca vartamānaṃ bhavatrayam|",
    "1418:20": "tatkṣaṇāt nikhilaṃ paśyet prabhāsvaraviśuddhitaḥ||8||",
    "1418:21": "etattattvaṃ sthitaṃ tantre śrīsamāje sumudritam|",
    "1418:22": "vyākhyātantrānusāreṇa boddhavyaṃ guruvaktrataḥ||9||",
    "1418:23": "tatra prathamataraṃ vāyutattvoddeśapadaṃ mūlasūtrādevāvatāryate-",
    "1418:24": "nāsāgre sarṣapaṃ cintet sarṣape sacarācaram|",
    "1418:25": "bhāvayejjñānapadaṃ ramyaṃ rahasyaṃ jñānakalpitam||10||",
    "1418:26": "pañcavarṇaṃ mahāratnaṃ sarṣapasthūlamātrakam|",
    "1418:27": "nāsikāgre prayatnena bhāvayed yogataḥ sadā||11||",
    "1418:28": "iti sandhābhāṣeyamasya vajrapadasya nirdeśamāha caturdevīvyākhyātantre ḥ",
    "1418:29": "tad devi sampravakṣyāmi sārāt sārataraṃ param|",
    "1418:30": "rahasyaṃ sarvabuddhānāṃ yat tat sarvātmani sthitam ||12||",
    "1418:31": "paścajñānamayaṃ tattvaṃ sarṣapasthūlamātrakam|",
    "1418:32": "tasya madhye sthito devo hyavyakto vyaktarūpavān||iti|13||",
    "1418:33": "samājottare'pyamumarthaṃ dyotayannāhaḥ|",
    "1418:34": "pañcajñānamayaṃ śvāsaṃ pañcabhūtasvabhāvakam|",
    "1418:35": "niścārya padmanāsāgre piṇḍarūpeṇa kalpayet||14||",
    "1418:36": "pañcavarṇaṃ mahāratnaṃ prāṇāyāmamiti smṛtam|",
    "1418:37": "svamantraṃ hṛdaye dhyātvā cittaṃ bindugataṃ nyaset||15|",
    "1418:38": "ityasyāpi pratinirdeśamāha vajramālānāmni vyākhyātantreḥ",
    "1418:39": "nāsāgre sarṣapaṃ nāma prāṇāyāmasya kalpanā|",
    "1418:40": "prāṇāyāmasthitāḥ pañca raśmayo buddhabhāvataḥ||16||",
    "1418:41": "ūrdhvaṃ ghrāṇād viniṣkrānto vāmadakṣiṇadvandvataḥ|",
    "1418:42": "stabdhaśceti caturdhā'smād velā ādhyātmikā smṛtā||17||",
    "1418:43": "kaṇṭhahṛnnābhiguhyābje gatyāgatī vinirdiśet|",
    "1418:44": "vihared ardhayāmikāṃ velāṃ paripāṭyā yathākramam||18||",
    "1418:45": "dakṣiṇād vinirgato raśmirhutabhuṅmaṇḍalaṃ ca tat|",
    "1418:46": "raktavarṇamidaṃ vyaktaṃ padmanātho'tra devatā||19||",
    "1418:47": "vāmād vinirgato raśmirvāyumaṇḍalasaṃjñitaḥ|",
    "1418:48": "haritaśyāmasaṅkāśaḥ karmanātho'tra devatā||20||",
    "1418:49": "dvābhyāṃ vinirgato raśmiḥ pītavarṇo mahādyutiḥ|",
    "1418:50": "māhendramaṇḍalaṃ caitad ratnanātho'tra devatā||21||",
    "1418:51": "stabdho mandrapracārastu sitakundendusannibhaḥ|",
    "1418:52": "maṇḍalaṃ vāruṇaṃ caitad vajranātho'tra devatā||22||",
    "1418:53": "sarvadehānugo vāyuḥ sarvaceṣṭāpravartakaḥ|",
    "1418:54": "vairocanasvabhāvo'sau mṛtakāyād viniścaret||23||",
    "1418:55": "vāyutattvamidaṃ vyaktaṃ pañcajñānasvabhāvakam|",
    "1418:56": "tārkikā na prajānanti agamyaṃ bālayoginām||24||",
    "1418:57": "ityevaṃ vāyuttatvaṃ pratipādyedānīṃ mantratattvasyoddeśapadaṃ mūlasūtrādavatāryate ḥ",
    "1418:58": "sarvatathāgatakāyavākcittarahasyaṃ sarvatantrahṛdayasañcodanaṃ nāma paramaguhyaṃ svakāyavākcittavajrebhyo vākpathaniruktyā mantrasamuccayamudājahāra oṃ āḥ hūṃ|",
    "1418:59": "arthānumajāpena niḥsvabhāvena cāruṇā|",
    "1418:60": "vicāraṇā tryadhvabuddhebhyo vajrajāpaḥ sa ucyate||25||",
    "1418:61": "bhikṣāśinā na japtavyaṃ na ca bhaikṣarato bhavet|",
    "1418:62": "japenmantramabhinnāṅgaṃ sarvakāmopabhogakṛt||26||",
    "1418:63": "ityuddeśapadam asya nirdeśamāha sandhyāvyākaraṇavyākhyātantre tadavatāryateḥ",
    "1418:64": "pratyuvāca tataḥ śrīmān mahāvairocanaṃ vibhum|",
    "1418:65": "viśvarūpamidaṃ cittaṃ sarvasattvopapattitaḥ||27||",
    "1418:66": "jātaṃ san niḥsvabhāvo'pi bhāvākhyaṃ tu pratītyataḥ|",
    "1418:67": "kṛtvā cānubhavaṃ samyag bodhicittaṃ khatulyakam||28||",
    "1418:68": "jagadarthaṃ vidhātuṃ ca taddeśayottame jane|",
    "1418:69": "sādhanopāyitāmātraṃ jñātvā tantre vipañcitam||29||",
    "1418:70": "ācāryā vayamityevaṃ vadantyāgāmikā vibho|",
    "1418:71": "yad vākyaṃ mametyevamuktvā kṣipanti bāliśāḥ|",
    "1418:72": "sandhyāya bodhicittaṃ te na vidanti yathārthataḥ|| iti| 30||",
    "1418:73": "yathedaṃ bhagavān svāmī mahāvairocano vibhuḥ|",
    "1418:74": "triṣkṛtvā sādhuvacanaṃ vajrapāṇiṃ vadedidam||31||",
    "1418:75": "kathayamāmi prabhedena nirvikalpārthatattvataḥ|",
    "1418:76": "pravyāhāropalambhākhyaṃ sāṅketaṃ pāramārthikam||32||",
    "1418:77": "pravyāhāro hi sāmānyaṃ buddharūpopalambhakam|",
    "1418:78": "sāṅketaṃ mantratattvākhyaṃ tathatā pāramārthikam||33||",
    "1418:79": "ekādirnavamadhye tu daśabhiryo na badhyate|",
    "1418:80": "tamabaddhaṃ vijānīyāt sa vetti parasampadam||34||",
    "1418:81": "svaravyañcanavarṇāśca navasaṃkhyānuvartinaḥ|",
    "1418:82": "' abaddhānyonyasaṃyoogād yo vetti sa jagadguruḥ||35||",
    "1418:83": "bhūtāntena samāyuktaṃ kalādiṣoḍaśe sthitam|",
    "1418:84": "pañcapañcakasaṃyuktaṃ catustrayaniyojitam||36||",
    "1418:85": "sānusvāraṃ sadīrghaṃ na guṇasaṃyolopavat|",
    "1418:86": "hrasvaṃ samastavākyaṃ syānna cānekaṃ na caikakam||37||",
    "1418:87": "ye varṇāḥ pṛṣṭhataḥ proktā abhimukhāśca ye punaḥ|",
    "1418:88": "strī-puṃ-napuṃsakāste ca dhātvādiparikalpitāḥ||38||",
    "1418:89": "adha-ūrdhvasamāyuktaṃ jñātvā buddhyā niyojayet|",
    "1418:90": "pravyāhāramidaṃ mantraṃ niḥsvabhāvasvabhāvajam||39||",
    "1418:91": "tataḥ pariṇataṃ rūpaṃ yaddevatopalambhikam|",
    "1418:92": "sāṅketikaṃ tritattvasthaṃ prakṛtijāpalapakṣaṇam||40||",
    "1418:93": "akāroddeśakaṃ jñānaṃ buddhasya hṛdayaṃ bhavet|",
    "1418:94": "oṃkāraḥ saṃsṛjet sattvān buddharūpāgrakalpitān||41||",
    "1418:95": "hūṃkāraḥsaṃharet sattvān āḥkāraḥ sthāpako bhavet|",
    "1418:96": "praveśaśva sthitiścaiva vyutthānaṃ ca krameṇa ca||42||",
    "1418:97": "japen mantramabhinnāṅgaṃ prajñopāyapade sthitaḥ|",
    "1418:98": "pāṇḍarādijapaḥ praktaḥ pañcaviṃśacchatadvayam||43||",
    "1418:99": "caturbhirguṇitaṃ samyak caturyogaśataṃ nava|",
    "1418:100": "navaśataṃ tu yad dṛṣṭaṃ caturviṃśatparikramaiḥ|",
    "1418:101": "pratyutpādād bhavet tatra dvyayutaṃ śataṣoḍaśam||44||",
    "1418:102": "idamevādhyātmikavelāyāṃ dyotayannāha samājottare ḥ",
    "1418:103": "vidyānayavidhānena catuḥsandhyāprayogataḥ|",
    "1418:104": "japenmantramabhinnāṅgaṃ lakṣamakṣarasaṃkhyayā||45||",
    "1418:105": "bāhyajāpaṃ tyajed yogī bhāvanāyāntarāyikam|",
    "1418:106": "mantrārtho bhagavān vajrī vajrātmātra kathaṃ japet||46||",
    "1418:107": "hastinaṃ labhate sadyo mṛgayeddhastinaḥ padam|",
    "1418:108": "mantramūrtiḥ svayaṃ sākṣāt kimanyattu gaveṣate||47||",
    "1418:109": "api ca vajradhṛk kaścit trisaṃyogānvito naraḥ|",
    "1418:110": "āvāhanavisarjanaṃ syāt tathā sthāpanameva ca||48||",
    "1418:111": "āvāhanaṃ praveśena tvaritena visarjanam|",
    "1418:112": "vāṣpeṇa sthāpanaṃ tat syād viśvastāt siddhiruttamā||49||",
    "1418:113": "tvarite nibandhake vāṣpe mantraniyojanā kathitā|",
    "1418:114": "karṇamūle tu śiṣyāyācāryeṇa suprayatnataḥ||50||",
    "1418:115": "atha yogeśvarāṇāṃ tu divyopāyaḥ pradarśitaḥ|",
    "1418:116": "guhyākṣaraṃ pravakṣyāmi yogasiddhiphalapradam||51||",
    "1418:117": "yena cintitamātreṇa yoginaḥ syurvarapradāḥ|",
    "1418:118": "ādyakṣaraprayogeṇa ucchavāsaṃ kurute sadā||52||",
    "1418:119": "aṣṭāntena samāyuktamukāreṇa sabindukam|",
    "1418:120": "niśvāsaṃ kurute yogī rucijāptamihocyate||53||",
    "1418:121": "ayutadvayaṃ sahasraṃ ca ṣaṭ śatāni tathaiva ca|",
    "1418:122": "ahorātreṇa yogīndro japasaṃkhyāṃ karoti ca||54||",
    "1418:123": "tadevaṃ guhyasandhyāyāṃ sūkṣmayogaḥ prakāśitaḥ|",
    "1418:124": "dhyānādhyayanavītaṃ tu tathāpi jāpa ucyate||55||",
    "1418:125": "anena vajrajāpena sevāṃ kṛtvā yathāvidhi|",
    "1418:126": "sādhayet sarvakāryāṇi māyopamasamādhinā||56||",
    "1418:127": "atrāha advayasamatāmahāyogatantre ḥ",
    "1418:128": "japitvā mantramatulaṃ sādhayet sādhanātmakaḥ|",
    "1418:129": "sidhyate tasya trailokyaṃ māsaikena na saṃśayaḥ||57||",
    "1418:130": "ṣaḍ lakṣāṇi japitvā tu mantraṃ jñānasamudbhavam|",
    "1418:131": "vajrasattvaṃ namaskṛtya pūrṇamāsyāṃ sa sidhyati||58||",
    "1418:132": "na tasya vratamākhyātaṃ nākṣasūtraṃ na mantrakam|",
    "1418:133": "dhāraṇā homakarmāṇi varjyante ca parāparam||59||",
    "1418:134": "yakārārthena yat kiñcit siddhimicchatā|",
    "1418:135": "rephāditritayenaiva jatatkāryaṃ pravartate||60||",
    "1418:136": "agnivāyavyamāhendravāruṇe pratimaṇḍale|",
    "1418:137": "ardhayāmikavelāyāṃ dvau dvau karmaṇi tiṣṭhataḥ||61||",
    "1418:138": "pūjāprāyo bhavet pūjyo jāpaprāyo viśudhyati|",
    "1418:139": "agnihotraparo bhūtiṃ mokṣaṃ dhyānaparo labhet||62||",
    "1418:140": "jñātvā itthaṃ tato mantrī jagadbālavadācaret|",
    "1418:141": "tataḥ sidhyanti mantrāśca nirvikalpaikadharmataḥ||63||",
    "1418:142": "mantratattvamidaṃ vyaktaṃ vāgvajrasya prasādhanam|",
    "1418:143": "jñānatrayaprabhedena cittamātre niyojayed|| iti|| 64||",
    "1418:144": "guroravajñāsuśaṭho'prasanno",
    "1418:145": "mantroddhataḥ pustakadṛṣṭigarvaḥ|",
    "1418:146": "aśraddadhānastvabhiṣekahīno",
    "1418:147": "vārtā kramasyāpi ca tasya noktā||65||",
    "1418:148": "yaḥ śraddadhāno gurubhaktiraktaḥ",
    "1418:149": "śuśrūṣaṇāyāṃ ca sadābhiyuktaḥ|",
    "1418:150": "grāhyaḥ śrutiṃ naiva dhanaṃ nirīkṣyaṃ",
    "1418:151": "gurupradhāno'ya guruprasādaḥ||66||",
    "1418:152": "girīndramūrdhnaḥ prapatet tu kaścit",
    "1418:153": "neccheccyutiṃ tu cyavate tathāpi|",
    "1418:154": "guruprasādāptahitopadeśa",
    "1418:155": "icchenna moktaṃ sa tathāpi muktaṃḥ||67||",
    "1418:156": "|| vajrajāpakramaḥ samāptaḥ||",
    "1418:157": "kṛtiriyaṃ śrīnāgārjunapādānāmiti|",
    "1418:158": "granthapramāṇamasya ṣadadhikasaptatiḥ||",
    "1418:159": "prathamaḥ kramaḥ||"
}