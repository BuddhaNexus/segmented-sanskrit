{
    "383:0": "20. phalaśrutiḥ",
    "383:1": "atha bhūyaḥ sa rājendro bhūpo'śokaḥ kṛtāṃjaliḥ|",
    "383:2": "upaguptaṃ tamarhantaṃ natvālokyedamabravīt||",
    "383:3": "bhadanta lokanātho'sau yadāvalokiteśvaraḥ|",
    "383:4": "iti nāmnā prasiddho'bhūttatkena samupādiśa||",
    "383:5": "282",
    "383:6": "iti saṃprārthite rājñā yatiḥ so'rhanmahāmatiḥ|",
    "383:7": "aśokaṃ taṃ mahārājaṃ samālokyaivamādiśat||",
    "383:8": "śṛṇu rājan mahābhāga yathā me guruṇoditam|",
    "383:9": "tathāhaṃ te pravakṣyāmi śrutvānubodhito bhava||",
    "383:10": "ṣaḍgatisambhavā lokāstraidhātubhuvanāśritāḥ|",
    "383:11": "teṣāṃ ye duḥkhitā duṣṭāḥ kleśāgniparitāpitāḥ||",
    "383:12": "tān sarvān sa jagannāthaḥ kṛpādṛṣṭyāvalokayat|",
    "383:13": "tenāvalokiteśākhyaḥ prasiddhastrijagatsvapi||",
    "383:14": "ye ye sattvā jagadbhartrā kṛpādṛṣṭyāvalokitāḥ|",
    "383:15": "te te sarve vikalmāṣā bhaveyurvimalāśayāḥ||",
    "383:16": "ye'pyasya trijagacchāstuḥ śṛṇuyurnām sādaram|",
    "383:17": "vimuktapātakāste syurniḥkleśā vimalendriyāḥ||",
    "383:18": "duḥkhāgnau patito yo'pi smṛtvā lokeśvaraṃ bhajet|",
    "383:19": "tadā taṃ sa mahāsattvaḥ kṛpādṛṣṭyāvalokayan||",
    "383:20": "tadā sa sahasā tasmādduḥkhāgneḥ parimuktitaḥ|",
    "383:21": "śuddhendriyo viśuddhātmā bhavet saṃbodhimānasaḥ||",
    "383:22": "yo nadyā prohyamāṇo'pi krandellokeśvaraṃ smaran|",
    "383:23": "tadā sa bodhisattvastaṃ kṛpādṛṣṭyāvalokayet||",
    "383:24": "tadā dadyānnadī tasya gādhaṃ santaraṇārthinaḥ|",
    "383:25": "tataḥ sa sahasottīrya smṛtvā dharmarato bhavet||",
    "383:26": "yadā ca vaṇijaḥ sārthā naukāruḍhā mahāmbudhau|",
    "383:27": "ratnārthino mahotsāhaiḥ saṃkrameyuryathākramam||",
    "383:28": "tatra nauḥ kālikāvātaiḥ preryamāṇām vilolitā|",
    "383:29": "tarasā rākṣasīdvīpasamīpaṃ samupācaret||",
    "383:30": "tadā teṣāṃ mahādhīraḥ smṛtvā lokeśvaraṃ namet|",
    "383:31": "lokeśastānstadā sarvān kṛpādṛṣṭyāvalokayan||",
    "383:32": "tatastāḥ kālikā vātā na careyuḥ prasāditāḥ|",
    "383:33": "tato nau savaṇiksārthā svasti ratnākaraṃ vrajet||",
    "383:34": "283",
    "383:35": "tatra te vaṇijaḥ sarve labdharatnāḥ pramoditāḥ|",
    "383:36": "svasti pratyāgatāḥ svasti samiyuḥ svapuraṃ laghu||",
    "383:37": "yadi daivādvipattiḥ syāt sarvatīrthajalāśraye|",
    "383:38": "mṛtāste śoṣitātmānaḥ saṃprayāyuḥ sukhāvatīm||",
    "383:39": "yaśca duṣṭo vadhāt sṛṣṭo gṛhīto vadhyaghātakaiḥ|",
    "383:40": "bhīto lokeśvaraṃ smṛtvā dhyātvā nāmāpyudāharet||",
    "383:41": "tadā lośeśvarastaṃ sa kṛpādṛṣṭyāvalokayet|",
    "383:42": "tataste ghātakāḥ sarve taṃ hantuṃ nābhiśaknuyuḥ||",
    "383:43": "yadi vighātito daivāt tyaktvā pāpāśrayāṃ mṛtaḥ|",
    "383:44": "śuddhāśayo viśuddhātmā saṃprayāyāt sukhāvatīm||",
    "383:45": "sarve yakṣāśca gandharvāḥ kumbhāṇḍā rākṣasā api|",
    "383:46": "kinnarā garuḍā nāgā bhūtāḥ pretāḥ piśācikāḥ||",
    "383:47": "lokeśvarasya bhaktāraṃ dhyātāraṃ smṛtibhāvinam|",
    "383:48": "nāmoccāraṇakartāraṃ draṣṭumapi na śaknuyuḥ||",
    "383:49": "yaścāpi nigaḍairbaddhā sthāpito bandhanālaye|",
    "383:50": "smṛtvā lokeśvaraṃ dyātvā tiṣṭhennāmāpyudāharet||",
    "383:51": "tatkṣaṇe lokanāthastaṃ kṛpādṛṣṭyāvalokayet|",
    "383:52": "tadā sa bandhanānmukto dharmābhiratato bhavet||",
    "383:53": "yaścāraṇye gṛhe vāpi caurairdhūtairupadrute|",
    "383:54": "smṛtvā lokeśvaraṃ dhyātvā namennāmāpyudāharet||",
    "383:55": "tatkṣaṇe lokanāthastaṃ kṛpādṛṭyāvalokayet|",
    "383:56": "tadā te dhūrtakāścaurāḥ sarve yāyuḥ parāṅmukhāḥ||",
    "383:57": "yaśca rogī sadā duṣṭaḥ kuṣṭhavyādhyācitāśrayaḥ|",
    "383:58": "smṛtvā lokeśvaraṃ dhyātvā namennāmāpyudāharet||",
    "383:59": "tatkṣeṇe lokanāthastaṃ kṛpādṛṣṭyāvalokayet|",
    "383:60": "tadā sa vyādhito mukto nīrogī puṣṭitendriyaḥ||",
    "383:61": "śuddhāśayo viśuddhātmā bhavet saṃbodhimānasaḥ|",
    "383:62": "yadi daivādvipattiḥ syāddhitvā duḥkhāśrayaṃ tanum|",
    "383:63": "śuddhāśayo viśuddhātmā saṃprayāyāt sukhāvatīm||",
    "383:64": "284",
    "383:65": "yaśca daridrito duḥkhī dīno'nātho durāśrayaḥ|",
    "383:66": "smṛtvā lokeśvaraṃ dhyātvā namennāmāpyudāharet||",
    "383:67": "tatkṣaṇe lokanāthastaṃ kṛpādṛṣṭyāvalokayet|",
    "383:68": "tadā sa śrīguṇotpanno bhavet sāadhuḥ śubhendriyaḥ||",
    "383:69": "yaśca saṃgrāmamadhye'pi śatrubhiḥ pariveṣṭita|",
    "383:70": "smṛtvā lokādhipaṃ dhyātvā namennāmāpyudāaharet||",
    "383:71": "tatkṣaṇe lokanāthastaṃ kṛpādṛṣṭyāvalokayet|",
    "383:72": "tadā so'rīnvinirjitya labdhvā ramejjayaśriyam||",
    "383:73": "yaścāpi dahyamāneṣu gṛhodyānāśrameṣvapi|",
    "383:74": "smṛtvā lokādhipaṃ dhyātvā nāma proccārayannamet||",
    "383:75": "tatkāle lokanāthastaṃ kṛpādṛṣṭyāvalokayet|",
    "383:76": "tadā sa sahasā vahniskandhaḥ śāmyennirākulaḥ||",
    "383:77": "vivāde kalaye vāpi paribhūte'pi durjanaiḥ|",
    "383:78": "smṛtvā lokeśvaraṃ dhyātvā nāma proccārayannamet||",
    "383:79": "tatkṣaṇe lokaśāstā taṃ kṛpādṛṣṭyāvalokayet|",
    "383:80": "tadā sa vijayan sarvān saṃsthāpayennije vaśe||",
    "383:81": "yaśca kleśāgnisaṃtapto vyākulendriyamānasaḥ|",
    "383:82": "smṛtvā lokaprabhuṃ dhyātvā namennāmāpyudāharan||",
    "383:83": "tatkṣaṇe taṃ mahāsattvo dayādṛṣtyāvalokayet|",
    "383:84": "tadā niḥkleśabhadrātmā bhavedbhadrendriyaḥ sudhīḥ||",
    "383:85": "yo'putraḥ putraratnārthī taṃ lokeśaṃ śaraṇaṃ gataḥ|",
    "383:86": "smṛtvā dhyātvā yathāśakti bhajennāmānyudāharan||",
    "383:87": "tadā sa trijagadbhartā kṛpādṛṣṭyāvalokayet|",
    "383:88": "dadyāttasmai putraratnaṃ mahāsattvaṃ jagatpriyam||",
    "383:89": "sutārthine'pi satputrīṃ ramākārāṃ śubhendriyām|",
    "383:90": "sarvasattvapriyāṃ kāntāṃ sādhvīṃ dadyājjagatprabhuḥ||",
    "383:91": "vidyārthī labhate vidyāṃ dhanārthi labhate dhanam|",
    "383:92": "rājyārthī labhate rājyaṃ lokeśabhaktimānapi||",
    "383:93": "285",
    "383:94": "dravyārthī labhate dravyaṃ guṇārthī labhate guṇam|",
    "383:95": "bhogyārthī labhate bhojyaṃ gṛhārthī labhate gṛham||",
    "383:96": "evamanyāni vastūni sarvopakaraṇānyapi|",
    "383:97": "yathābhivāṃchitaṃ sarvaṃ labhellokeśabhaktimān||",
    "383:98": "tenāsau trijagannātha āryāvalokiteśvaraḥ|",
    "383:99": "iti prakhyāpitaḥ sarvairdharmarājaimunīśvaraiḥ||",
    "383:100": "evaṃ mahattaraṃ puṇyaṃ lokeśabhaktibhāvinām|",
    "383:101": "aprameyamasaṃkhyeyaṃ saṃbuddhapadasādhanam||",
    "383:102": "ityevaṃ sugataiḥ sarvaiḥ samādiṣṭaṃ samantataḥ|",
    "383:103": "bodhisattvairmahābhijñaiḥ sarvaiścāpi praśaṃsyate||",
    "383:104": "iti matvā mahārāja lokanāthasya sarvadā|",
    "383:105": "śaraṇe samupāśritya bhajasva śraddhayā mudā|",
    "383:106": "yasya lokeśvare bhaktistasya pāpaṃ na kiṃcana|",
    "383:107": "duṣṭakleśabhayaṃ nāpi nirvighnaṃ satsukhaṃ sadā||",
    "383:108": "sarve duṣṭagaṇā mārāḥ kṣīyante sarvataḥ sadā|",
    "383:109": "yamadūtādayaścāpi palāyeyuḥ parāṅmukhāḥ||",
    "383:110": "lokeśabhktibhājāṃśca puṇyadhārā nirantarā|",
    "383:111": "apreyā asaṃkhyeyāḥ pravardhante divāniśam||",
    "383:112": "etatpuṇyānubhāvaistu saddharmastena labhyate|",
    "383:113": "tatsaddharmānubhāvena saṃbuddho dṛśyate'grataḥ||",
    "383:114": "tato buddhānubhāvena bodhicittaṃ sulabhyate|",
    "383:115": "bodhipraṇidhicittena caryante bodhicārikāḥ||",
    "383:116": "kramāt saṃbodhisaṃbhāraṃ pūrayitvā yathākramam|",
    "383:117": "sarvān kleśān vinirjityāacaturmāragaṇānapi||",
    "383:118": "sarvatra vaśitā prāptā dhāraṇīguṇasaṃyutā|",
    "383:119": "daśabhūmīśvaro bhūtvā saṃbodhiṃ samavāpnuyāt||",
    "383:120": "iti matvā mahābhijño lokeśvaro jinātmajaḥ|",
    "383:121": "bhajanīyaḥ sadā sadbhiḥ saṃbuddhapadavāṃchibhiḥ||",
    "383:122": "286",
    "383:123": "ye bhajanti sadā nityaṃ lokeśvaraṃ jagatprabhum|",
    "383:124": "teṣāṃ naiva bhayaṃ kiṃcitsarvatra sarvadāpi hi||",
    "383:125": "rakṣeyustaṃ samālokya brahyādayo maharṣayaḥ|",
    "383:126": "śakrādayaḥ surendrāśca sarvalokādhipā api||",
    "383:127": "rakṣeyuragnayo'pyenaṃ lokeśabhaktibhāvinam|",
    "383:128": "dharmarājādayaḥ pretāḥ sarve niśācarā api||",
    "383:129": "varuṇāśca hi rājāśca sarve vāyugaṇā api|",
    "383:130": "sarve śrīdādayo yakṣāḥ sarve bhūtādhipā api||",
    "383:131": "sūryādayo grahāḥ sarve candrādayaśca tārakāḥ|",
    "383:132": "sarve siddhāśca sādhyāśca rudrā vidyādharā api||",
    "383:133": "dhṛtarāṣṭrādayaḥ sarve gandharvā api sarvadā|",
    "383:134": "viruḍhakādikumbhāṇḍā rakṣeyustaṃ sadānugāḥ||",
    "383:135": "virupākṣādayaḥ sarve nāgendrā garuḍā api|",
    "383:136": "kuverapramukhāḥ sarve yakṣā api samādarāt||",
    "383:137": "drumādikinnarāḥ sarve vemacitrādayo'surāḥ|",
    "383:138": "sarve paiśācikāścāpi rakṣeyustaṃ samāhitaḥ||",
    "383:139": "sarve mātṛgaṇāścāpi sakumāragaṇādhipāḥ|",
    "383:140": "sarve'pi bhairavāḥ sarve mahākālagaṇā api||",
    "383:141": "saḍākaḍākinīsaṃghāḥ sarve kāpālikā api|",
    "383:142": "sarve vaitāḍikāścāpi dṛṣṭvā ceyustamādarāt||",
    "383:143": "tathā ca yoginaḥ siddhā avikalpā jitendriyāḥ|",
    "383:144": "dūrāddṛṣṭvābhirakṣeyustaṃ lokeśaśaraṇāśritam||",
    "383:145": "vajrapāṇyādayo vīrāḥ sarvamantrārthasādhakāḥ||",
    "383:146": "rakṣeyustaṃ samālokya lokeśabhakticāriṇam||",
    "383:147": "yatayastīrthikāścāpi tāpasā brahmacāriṇaḥ|",
    "383:148": "vaiṣṇavā api śaivāśca liṃgino vratino'pi ca||",
    "383:149": "dūrādapi tamālokya bhaktimantaṃ jagatprabhoḥ|",
    "383:150": "praṇatvā prāṃjaliṃ dhṛtvā praśaṃseyuḥ samādarāt||",
    "383:151": "287",
    "383:152": "arhanto bhikṣavaścāpi dṛṣṭgā taṃ dūrato mudā|",
    "383:153": "dhanyo'sīti samārādhya prakuryurabhinanditam||",
    "383:154": "śrāvakāścailakāścāpi vratinaścāpyupāsakāḥ|",
    "383:155": "dūratastaṃ mahābhāgaṃ dṛṣṭva nameyurānatāḥ||",
    "383:156": "sarve cāpi mahāsattvā bodhisatvā jinātmajāḥ|",
    "383:157": "varadānaistamārādhya cārayeyurjagaddhite||",
    "383:158": "pratyekasugataścāpi dṛṣṭvā taṃ bodhibhāginam|",
    "383:159": "samālokya samāśvāsya prerayeyuḥ susaṃvare||",
    "383:160": "saṃbuddhā api sarve taṃ saṃbuddhapadalābhinam|",
    "383:161": "dṛṣṭvābhinandya saddharme niyujyāveyurābhavam||",
    "383:162": "evamasya jagadbharturlokeśasya mahātmanaḥ|",
    "383:163": "saddharmaguṇamāhātmyaṃ sarvabuddhaiḥ praśaṃsyate||",
    "383:164": "evaṃ mahattaraṃ puṇyaṃ lokeśabhajanodbhavam|",
    "383:165": "matvā sadānumoditvā śrotavyam bodhivāṃchibhi||",
    "383:166": "idaṃ sarvaṃ mahāyānasūtraratnaṃ subhāṣitam|",
    "383:167": "śṛṇvanti śraddhayā ye'pi kalau paṃcakaṣāyite||",
    "383:168": "durgatiṃ te na gacchinta kadācana kathaṃcana|",
    "383:169": "sadā sadgatisaṃjātā bhavanti bhadracāriṇaḥ||",
    "383:170": "lokeśasya jagacchāstuḥ sarvadā śaraṇe sthitāḥ|",
    "383:171": "dhyātvā nāma samuccārya smṛtvā bhajeyurābhavam||",
    "383:172": "etatpuṇyānuliptāste bhadraśrīsadguṇālayāḥ|",
    "383:173": "saddharmasukhasaṃpattiṃ bhuktvā yāyuḥ sukhāvatīm||",
    "383:174": "enaṃ yaḥ sakalāṃllokāṃcchrāvayati prabodhayan|",
    "383:175": "so'pi na durgatiṃ yāti yāti sadgatimeva hi||",
    "383:176": "etatpuṇyaviśuddhātmā bhadraśrīsadguṇāśrayaḥ|",
    "383:177": "saddharmasukhasaṃpattiṃ bhuktvā yāyāt sukhāvatīm||",
    "383:178": "yaścāpīdaṃ kalau kāle nirapekṣāḥ svajīvite|",
    "383:179": "sabhāmadhye samāsīno bhāṣet sūtrasubhāṣitam||",
    "383:180": "288",
    "383:181": "so'pyetatpuṇyaśuddhātmā yāyānna durgatiṃ kvacit|",
    "383:182": "sadā sadgatisaṃjāto bhadraśrīsadguṇāśrayaḥ||",
    "383:183": "sarvasattvahitādhānaṃ saddharmameva sādhayan|",
    "383:184": "śubhiotsāhasahatsaukhyaṃ bhuktvā yāyāt sukhāvatīm||",
    "383:185": "tatrāmitaruceḥ śāstuḥ sarve śaraṇe sthitāḥ|",
    "383:186": "sadā dharmāmṛtaṃ pītvā careyurbodhisaṃvaram||",
    "383:187": "tataste bodhisaṃbhāraṃ pūrayitvā yathākramam|",
    "383:188": "bhaveyuḥ sarve lokeśā daśabhūmīśvarā api||",
    "383:189": "tataste nirmalatmāno bodhisattvā jinātmajāḥ|",
    "383:190": "bhaveyuyustriguṇābhijñā mahāsattvāḥ śubhendriyāḥ||",
    "383:191": "kleśān māragaṇān sarvān jitvārhanto niraṃjanāḥ|",
    "383:192": "trividhāṃ bodhimāsādya saṃbuddhapadamāpnuyuḥ||",
    "383:193": "ye'pi vedamahāyānasūtrarājaṃ likhenmudā|",
    "383:194": "tenāpi likhitaṃ sarvamahāyānasubhāṣitam||",
    "383:195": "lekhāpitaṃ ca yenedaṃ sūtrarājasubhāṣitam|",
    "383:196": "tena lekhāpitaṃ jñānaṃ sarvaṃ mahāyānasubhāṣitam||",
    "383:197": "likhitaṃ vāpi yenedaṃ prātiṣṭhāpya yathāvidhi|",
    "383:198": "śuddhasthāne gṛhe sthāpya pūjāṃgaiḥ sarvadārcitam||",
    "383:199": "tenārhanto jināḥ sarve pratyekasugatā api|",
    "383:200": "sasaṃghā bodhisattvāśca bhavanti pūjitāḥ khalu||",
    "383:201": "yaścāpīdaṃ svayaṃ dhṛtvā parebhyo'pi samādiśet|",
    "383:202": "bhāvayet satataṃ smṛtvā dhyātvāpi praṇayen mudā||",
    "383:203": "tasya sarve munīndrāśca pratyekasugatā jināḥ|",
    "383:204": "arhanto bodhisattvāśca tuṣṭā dadyuḥ samīhitam||",
    "383:205": "yaścaitadupadeṣṭāraṃ sarvāṃśca śrāvakānapi|",
    "383:206": "yathāvidhi samabhyarcya bhojanaiḥ paritoṣayet||",
    "383:207": "tena sarve'pi saṃbuddhāḥ pratyekasugatā api|",
    "383:208": "arhanto bhikṣavaḥ sarve yogino brahmacāriṇaḥ||",
    "383:209": "289",
    "383:210": "bodhisattvāśca sarve'pi vratino yatayo'pi ca|",
    "383:211": "abhyarcya bhojanairnityaṃ bhaveyuḥ paritoṣitāḥ||",
    "383:212": "kimevaṃ bahunoktena sarve buddhāḥ munīśvarāḥ|",
    "383:213": "sarvāḥ pāramitā devyaḥ sarve saṃghā jinātmajāḥ||",
    "383:214": "nityaṃ teṣāṃ samālokya kṛpādṛṣṭyānumoditāḥ|",
    "383:215": "rakṣāṃ vidhāya sarvatra varaṃ dadyurjagaddhite||",
    "383:216": "lokapālāśca sarve'pi sarve devāśca dānavāḥ|",
    "383:217": "rakṣāṃ kṛtvā varaṃ dadyusteṣāṃ saddharmasādhinām||",
    "383:218": "rājāno'pi sadā teṣāṃ rakṣāṃ kṛtvānumoditāḥ|",
    "383:219": "yathābhivāṃchitaṃ kṛtvā pālayeyuḥ samāadarāt||",
    "383:220": "mantriṇo'pi sadā teṣāṃ sāmātyasacivānugāḥ|",
    "383:221": "sabhṛtyasainyabhaṭṭāśca bhaveyurhitakāriṇaḥ||",
    "383:222": "sarve vaiśyāśca sarvārthabhartāraḥ syuḥ suhṛtpriyāḥ|",
    "383:223": "śreṣṭhimahājanāḥ sarve bhaveyurhitakāriṇaḥ||",
    "383:224": "dviṣo'pi dāsatāṃ yāyurduṣṭāśca syurhitāśayāḥ|",
    "383:225": "evamanye'pi lokāśca sarve syurmaitramānasāḥ||",
    "383:226": "paśavaḥ pakṣiṇaścāpi sarve kīṭāśca jantavaḥ|",
    "383:227": "naiva teṣāṃ viruddhāḥ syurbhaveyurhitaśaṃsinaḥ||",
    "383:228": "evaṃ sarvatra lokeṣu teṣāṃ saddharmasādhinām|",
    "383:229": "nirutpātaṃ śubhotsāhaṃ saumāṃgalyaṃ sadā bhavet||",
    "383:230": "evaṃ bhadrataraṃ puṇyaṃ lokeśabhajonodbhavam|",
    "383:231": "matvā taṃ trijagannāthaṃ bhajasva sarvadā smaran||",
    "383:232": "ye tasya śaraṇe sthitvā dhyātvā samāhitāḥ|",
    "383:233": "nāmāpi ca samuccārya bhajanti śraddhayā sadā||",
    "383:234": "teṣāṃ syuḥ suprasannāni triratnānyapi sarvadā|",
    "383:235": "kṛpādṛṣṭyā samālokya kṛtvā ceyuḥ śubhaṃ sadā||",
    "383:236": "etacchāstrā samādiṣṭamupāguptena bhikṣuṇā|",
    "383:237": "śrutvāśokaḥ sa bhūmīndraḥ prābhyananadan prabodhitaḥ||",
    "383:238": "290",
    "383:239": "sabhā sarvāvatī sāpi śrutvaitat saṃprasāditā|",
    "383:240": "tatheti prativanditvā prābhyanandat prabodhitā||",
    "383:241": "tataste sakalā lokāḥ samutthāya pramoditāḥ|",
    "383:242": "upaguptaṃ tamarhantaṃ natvā svasvālayaṃ yayuḥ||",
    "383:243": "tataḥ prabhṛti rājā sa lokeśaṃ sarvadā smaran|",
    "383:244": "dhyātvā nāma samuccārya prāabhajat pālayan prajāḥ||",
    "383:245": "tadā tasya narendrasya viṣaye tatra sarvadā|",
    "383:246": "nirutpātaṃ śubhotsāhaṃ prāvartata samantataḥ||",
    "383:247": "iti jayaśriyādiṣṭaṃ niśamya sa sasāṃghikaḥ|",
    "383:248": "jinaśrīrāja ātmajñaḥ prābhyanandat prabodhitaḥ||",
    "383:249": "tataścāsau mahābhijño jayaśrīḥ sugarātātmajaḥ|",
    "383:250": "sarvān saṃghān samālokya punarevaṃ samādiśat||",
    "383:251": "yatredaṃ sūtrarājendraṃ prāvartayet kalāvapi|",
    "383:252": "bhāṣedyaḥ śṛṇuyādyaśca śrāvayedyaśca pracārayet||",
    "383:253": "eteṣāṃ tatra sarveṣāṃ saṃbuddhāḥ sakalāḥ sadā|",
    "383:254": "kṛpādṛṣṭyā samālokya kurvantu bhadramābhavam||",
    "383:255": "sarvāḥ pāramitādevyasteṣāṃ tatra sadā śivam|",
    "383:256": "kurvantyā bodhisaṃbhāraṃ pūrayantu jagaddhite||",
    "383:257": "sarve'pi bodhisattvāśca pratyekasugatā api|",
    "383:258": "arhanto yoginasteṣāṃ bhadraṃ kurvantu sarvadā||",
    "383:259": "brahmadilokapālaśca sarve cāpi maharṣayaḥ|",
    "383:260": "tatra teṣāṃ ca sarveṣāṃ kurvantu maṃgalaṃ sadā||",
    "383:261": "kāle varṣantu meghāśca bhūyācchasyavatī mahī|",
    "383:262": "nirutpātaṃ mahotsāhaṃ subhikṣaṃ bhavatu dhruvam||",
    "383:263": "bahukṣīrapradā gāvo vṛkṣāḥ puṣpafalānvitāḥ|",
    "383:264": "auṣadhyo rasavīryādyā bhūyātsustatra sarvadā||",
    "383:265": "bhavantu prāṇinaḥ sarve ārogyacirajīvinaḥ|",
    "383:266": "sarvadravyasamāpannāḥ śrīmanto bhadracāriṇaḥ||",
    "383:267": "291",
    "383:268": "rājā bhavatu dharmiṣṭho mantriṇo nīticāriṇaḥ|",
    "383:269": "sarve lokāḥ suvṛttisthā bhavantu dharmasādhinaḥ||",
    "383:270": "mā bhutkaściddurācāraścauro duṣṭaśca vaṃcakaḥ|",
    "383:271": "daridro durbhago dīno madamānābhigarvitaḥ||",
    "383:272": "sarve sattvāḥ samācārāḥ pariśuddhatrimaṇḍalāḥ|",
    "383:273": "svasvakulavratārakṣāḥ pracarantu jagaddhite||",
    "383:274": "sarve bhadrāśayāḥ santaḥ saṃbodhivratacāriṇaḥ|",
    "383:275": "triratnabhajanaṃ kṛtvā saṃcarantāṃ sadā śubhe||",
    "383:276": "iti jayaśriyākhyātaṃ śrutvā sarve'pi sāṃghikāḥ|",
    "383:277": "evamastviti vijñapya prābhyanandan pramoditāḥ||",
    "383:278": "||iti jinaśrīrājaparipṛṣṭajayaśrīsaṃprabhāṣita-",
    "383:279": "śrīmadāryāvalokiteśvaraguṇakāraṇḍavyūhasūtrarājaṃ samāptam||",
    "383:280": "ye dharmā hetuprabhavā hetuṃ teṣāṃ tathāgato hyavadat |",
    "383:281": "teṣāṃ ca yo nirodhaṃ evaṃvādī mahaśramaṇaḥ ||",
    "383:282": "||śubhamastu||"
}