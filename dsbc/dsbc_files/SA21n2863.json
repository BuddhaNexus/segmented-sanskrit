{
  "SA21n2863:3": "Śrīcakrasambarābhisamayavyākhyā",
  "SA21n2863:7": "namaḥ śrīcakrasambarāya",
  "SA21n2863:14": "prathamataraṃ śmaśānaparvatādāvuccasthāneṣu",
  "SA21n2863:15": "copaviṣṭo muktakeśo dakṣiṇābhimukho yogī mukhaprakṣiptapañcāmṛtavaṭikaḥ",
  "SA21n2863:16": "śrīheruketyakṣaracatuṣṭayasyārthamāmukhayan",
  "SA21n2863:23": "śrīkāramadvayajñānaṃ he iti hetuśūnyam |",
  "SA21n2863:27": "ru itiapagatavyūhaṃ ka iti na kvacit sthitamiti ||",
  "SA21n2863:35": "sarvasattvahitasukhahetave śrīheruko'hamiti",
  "SA21n2863:36": "triruccārya dvibhujasambaramātmānamadhimucya tadanantaram - oṃkārādi hu hu",
  "SA21n2863:37": "phaṭ mantramālikālipaṃktiṃ pañcaraśmikāṃ triruccārya pariveṣṭya sthitā",
  "SA21n2863:38": "spharanti (?) | cakre devatāvṛndamarddhitavipravṛndāṃ ( ndaṃ )",
  "SA21n2863:39": "bhāvayitvā kiṃ kartavyamityāha -",
  "SA21n2863:46": "prathamaṃ tāvadyogeśvareṇa caturbrahyāvihāriṇā",
  "SA21n2863:47": "bhāvavyam | evaṃ sarva kṛtvā caturbrahyāvihārabhāvaneti kuto labhyate ?",
  "SA21n2863:48": "gurupadeśato yogeśvaravacanācca |",
  "SA21n2863:49": "abhimātrasattvāpekṣayā saṃkṣiptā maitrayādi [ saṃ ] [ a ] sāraduḥkhāduddhṛtya tathataikarasamahāsukhe",
  "SA21n2863:50": "sarvasattvā mayā pratiṣṭhāpayitavyā iti |",
  "SA21n2863:51": "tatra duḥkhoddharaṇātkaruṇā | sukhe",
  "SA21n2863:52": "pratiṣṭhā [ panā ] nmaitrī |",
  "SA21n2863:53": "tathatā rupatvenopekṣā |",
  "SA21n2863:54": "sthirasukhatvena mudita |",
  "SA21n2863:55": "vistārāttu maitryadibhāvanā prasiddhaiva |",
  "SA21n2863:56": "bhāvyamityanena sarveyaṃ bhāvanāsūcitā |",
  "SA21n2863:57": "pra yoganamucyatesarvavikalpamalanāśāya",
  "SA21n2863:58": "śūnyatādhimokṣaḥ |",
  "SA21n2863:59": "dvibhujasambarāhaṅkāreṇa sarvakāyavyāpāraśuddhiḥ |",
  "SA21n2863:60": "sarvasya ca",
  "SA21n2863:61": "jagato'nādisaṃsiddhiprakṛtipariśuddhaśrīherukarupatā ca sūcitā |",
  "SA21n2863:62": "ālikālibhāvanayā sarvavāgvyāpāraviśuddhiḥ |",
  "SA21n2863:63": "bodhicittotpādena sarvakuśalamūlavṛddhiḥ",
  "SA21n2863:64": "viśuddhaskandhādisamunta ( manta )",
  "SA21n2863:65": "pūjādikaṃ bodhiḥ śīghrahetukaṃ bhavatītyata āha",
  "SA21n2863:66": "tataḥ pañcaskandhāhaṅkāramutpādayet |",
  "SA21n2863:67": "tatra rupādiṣu vijñānaparyanteṣu",
  "SA21n2863:68": "phenabudrudamarīcikadalīmāyopamatvena niścayo vairocanādayaḥ sarvatathāgatatve",
  "SA21n2863:69": "tathatāyāmityarthaḥ |",
  "SA21n2863:70": "ya dvā vairocanādi [ devatā ] dhimokṣa evaṃ teṣāṃ viśuddhiḥ | tatra",
  "SA21n2863:71": "rupavedanāsaṃjñāsaṃskāravijñāneṣu vairocanaratnasambhava amitābha",
  "SA21n2863:72": "amoghapasiddhivajrasattvāḥ |",
  "SA21n2863:73": "rupāditathatāyāmakṣobhyaḥ |",
  "SA21n2863:74": "śukla ( sita ) pītaraktaharitaśukla ( rakta )",
  "SA21n2863:75": "kṛṣṇāḥ ṣaḍete varṇato boddhavyāḥ |",
  "SA21n2863:76": "cakrodyatadakṣiṇakaro",
  "SA21n2863:77": "ghaṇṭāyutasarvakaṭisthavāma [ ka ] ro vairocanaḥ",
  "SA21n2863:78": "ratnasambhavamitābhāmoghasiddhayo ratnaraktapadhmaviśvavajrodyatasalīladakṣiṇabhujāḥ",
  "SA21n2863:79": "ghaṇṭāyutahṛdratavāmakarāḥ |",
  "SA21n2863:80": "vajrasattvo vajradhārī salīlahṛdratadakṣiṇakaraḥ",
  "SA21n2863:81": "ghaṇṭāyutasagarvakaṭisthavāmakaraḥ |",
  "SA21n2863:82": "herukavajraḥ savajrabhūsparśamudrādakṣiṇakaraḥ",
  "SA21n2863:83": "[ ghaṇṭāyutasagarvakaṭisthavāmakaraḥ ] |",
  "SA21n2863:84": "cakṣuṣorityādi |",
  "SA21n2863:85": "anya tantreṣu siddhastu () |",
  "SA21n2863:86": "kṣitigarbhavajra",
  "SA21n2863:93": "pāṇīkhagarbhalokeśvarasarvanivaraṇaviṣkambhisamantabhadrāḥ |",
  "SA21n2863:94": "atra mohavajrādayaḥ kramaśo boddhavyāḥ |",
  "SA21n2863:95": "[ śukla ] [ a ] kṛṣṇapītaraktaśyāmasitavarṇāḥ |",
  "SA21n2863:96": "mohavajraścakrodyatadakṣiṇakaraḥ salīlaghaṇṭāyutahṛdratavāmakaraḥ |",
  "SA21n2863:97": "dveṣavajraḥ",
  "SA21n2863:98": "savajrahṛdratadakṣiṇakaraḥ sagarvaghaṇṭānvitakaṭisthavāmakaraḥ |",
  "SA21n2863:99": "īrṣryāgamātsaryavajrāḥ",
  "SA21n2863:100": "kramaśo ratnaraktakamalaviśvavajrodyatasalīladakṣiṇabhujāḥ ghaṇṭānvitasalīlahṛdratavāmakarāḥ |",
  "SA21n2863:101": "aiśvaryavajrastu savajrahṛdratadakṣiṇakaraḥ ghaṇṭānvitasagarvakaṭisthavāmakaraḥ |",
  "SA21n2863:102": "pātanīmāraṇikarṣaṇīnartteśvarya ekavaktrāścaturbhujāḥ pītakṛṣṇaraktaharitavarṇāḥ |",
  "SA21n2863:103": "locanāmāmakī pānḍarātārā [ ākāśadhātu ] svabhāvāḥ cakrakartivajrakartikamalakartikhaḍgakartidhāridakṣiṇabhujadvayāḥ |",
  "SA21n2863:104": "kapālakhaṭvāṅgadhārivāmabhujadvayāḥ |",
  "SA21n2863:105": "padhmajvālinī dhūmraśuklaraktatrimukhī ṣaḍbhujādharmadhātuvajrasvabhāvā",
  "SA21n2863:106": "dhūmravarṇā kapālakhaṭvāṅgapāśadhārivāma [ bhujatra ] yā aṅkuśabrahmāmuṇḍakartiśobhitadakṣiṇabhujatrayā |",
  "SA21n2863:107": "ādarśajñānasvabhāvo vairocanaḥ |",
  "SA21n2863:108": "samatājñānasvabhāvo vajrasūryaḥ |",
  "SA21n2863:109": "pratyavekṣaṇājñānasvabhāvaḥ",
  "SA21n2863:110": "padhmanarteśvaraḥ |",
  "SA21n2863:111": "kṛtyānuṣṭhānajñānasvabhāvo vajrarājaḥ |",
  "SA21n2863:112": "atra sādhanaṃ",
  "SA21n2863:113": "suviśuddhadharmadhātujñānasvabhāvo vajrasattvaḥ |",
  "SA21n2863:114": "dharmadhātusvabhāvo'kṣobhyaḥ |",
  "SA21n2863:115": "mohavināśanāt mohavajraḥ |",
  "SA21n2863:116": "dveṣadveṣaṇād dveṣavajraḥ |",
  "SA21n2863:117": "iṣryāvināśanādīṣryāvajraḥ |",
  "SA21n2863:118": "sarvāṅgavināśādrāgavajraḥ |",
  "SA21n2863:119": "mātsarya vināśanānmātsaryavajraḥ |",
  "SA21n2863:120": "sarveśvaryadānādaiśvaryavajraḥ |",
  "SA21n2863:121": "nāmānurupakarmasādhikāḥ pātanyādayaḥ |",
  "SA21n2863:122": "vairocanādaya ālīdapadāḥ jaṭāmukuṭinaḥ trinetrāḥ pañcamudriṇaḥ | devyo",
  "SA21n2863:123": "muktakeśyo nagnā ālīdapadāḥ |",
  "SA21n2863:124": "tata iti skandhādiśodhanānantaram |",
  "SA21n2863:125": "vajrapañjaraṃ",
  "SA21n2863:126": "vicintayet |",
  "SA21n2863:127": "pūrvādidikṣu niveśayet |",
  "SA21n2863:128": "urdbhyaṃ tu śarajālakam | hūṃkāreṇa",
  "SA21n2863:129": "viśvavajramaryīṃ bhūmi madhitiṣṭhet |",
  "SA21n2863:130": "tadraśmyavabhāsataḥ vajraprākāraṃ",
  "SA21n2863:131": "vajravitānaṃ ceti |",
  "SA21n2863:132": "eṣā saptavākyānāṃ yathopadeśamānupūrvī likhyate |",
  "SA21n2863:133": "vāmajrjanyaṅguṣṭhacchoṭikādānapūrvakam |",
  "SA21n2863:134": "oṃ sumbhanisumbhetyādi caturo mantrānuccārayan kṛṣṇahatitaraktapītavarṇeḥ",
  "SA21n2863:135": "brahyāṇḍarasātalavyāpijva [ la ] nmahākāyān |",
  "SA21n2863:136": "pūrvottarapaścimadakṣiṇāsu dikṣu",
  "SA21n2863:137": "krameṇa niveśayet |",
  "SA21n2863:138": "sumbhadimantraraśmibhistadvarṇāścaturaḥ prākārān",
  "SA21n2863:139": "tatsamakālameva hūṃkāraja tadadhiṣṭhitaviśvavajreṇa viśvavajramaryī",
  "SA21n2863:140": "bhūmimārasātalaparyantāṃ tadvajraraśmibhiḥ pañcasūcikā vajrākāramupariśarajālam |",
  "SA21n2863:141": "tasmādho vajrapañjaraṃ vajravitānaṃ ca yathāsthanaṃ vicintayet |",
  "SA21n2863:148": "tataḥ sumbhādimantracatuṣṭayaniṣpannāḥ",
  "SA21n2863:149": "kākāsyādi catasro devyaḥ |",
  "SA21n2863:150": "tadevobhayobhayamantraraśmisambhūtā",
  "SA21n2863:151": "yamadādyādicatasra devyaḥ |",
  "SA21n2863:152": "etā aṣṭau dvibhujaikavaktrāḥ |",
  "SA21n2863:153": "nābheradhaḥ śūlākārādakṣiṇe",
  "SA21n2863:154": "vajramudraradharāḥ |",
  "SA21n2863:155": "vāme ātmarupikīlakahastāḥ spharaṇayogena gatvā",
  "SA21n2863:156": "daśadiggatavighnavṛndamānīya dīrghanādoccāritahūṃkāraniṣpannāṣṭadigaṣṭaprākārasamīpakūpeṣu",
  "SA21n2863:157": "praveśya kīlanamantroccāraṇapūrvakaṃ vighnavṛndaṃ kīlayantyaḥ ākoṭanamantroccāraṇapūrvakamākoṭayantyaḥ",
  "SA21n2863:158": "kīlanākoṭanābhyāṃ vighnavṛndaṃ mahāsukhena tathataikarupaṃ vicintayet |",
  "SA21n2863:165": "punaḥ śeṣavighnānutsādya prākāre līyamānāsu",
  "SA21n2863:166": "tāsu toye toyasphālanabindunirgamanyāyena sīmābandhanārtha vartulāṃ",
  "SA21n2863:167": "vajrapadyacakraprākārānvicintayet |",
  "SA21n2863:168": "tadevaṃ vajraprākārādikaṃ niḥsandhyaikakhaṇḍībhūtaṃ",
  "SA21n2863:169": "sarvathā nirvighnaṃ ca jagadadhimuñcet |",
  "SA21n2863:170": "vajrapañjarādi ( de )",
  "SA21n2863:171": "ranantaraṃ kimartha mantra ( marthamantra )",
  "SA21n2863:172": "śūnyatābhāvaneti na codyam ,",
  "SA21n2863:173": "yato'dhimātraprajñādhikārādidaṃ tantraṃ tasya",
  "SA21n2863:174": "ca śunyataiva paramā rakṣā |",
  "SA21n2863:175": "kathaṃ tahiṃ bahirlekhyamaṇḍale bāhyāvajrāvalīti",
  "SA21n2863:176": "cet na | yadeva bhagavato niṣpattistadeva samayacakraparicchedikāyā",
  "SA21n2863:177": "viśvavajrāvalerniṣpatteḥ |",
  "SA21n2863:178": "ta ta iti rakṣābhāvanānantaram |",
  "SA21n2863:179": "svahṛdaya iti rakṣāpañjaramadhyasthitasyātmano",
  "SA21n2863:180": "hṛdaye | akāreṇeti anusvārayuktenākṣarapariṇatacandropari | huṃkāreṇa",
  "SA21n2863:181": "vajradharupeṇa |",
  "SA21n2863:182": "vajradharasya ca candramaṇḍalitvaṃ yuktameva |",
  "SA21n2863:183": "nānāraśmivisphurantamiti sphuratpañcaraśmikam |",
  "SA21n2863:184": "nijavarṇastu hūṃkāraṃ",
  "SA21n2863:185": "cāsyapāradarśidṛśaḥ |",
  "SA21n2863:186": "madhye nīlatvena bāhyo śubhratvena |",
  "SA21n2863:187": "saṃpūjyeti vīṇādiṣoḍaśadevībhiḥ |",
  "SA21n2863:188": "tatra vīṇā vaṃśā mṛdaṅgā murajā ekavaktrāścaturbhujāḥ |",
  "SA21n2863:189": "nīlā pītā raktā haritāḥ",
  "SA21n2863:190": "svasvavādyavādanatatparapradhānabhujadvayā vajravajraghaṇṭāgharā'parabhujadvayāḥ |",
  "SA21n2863:191": "hāsyā lāsyā gītā [ nṛtyā ] ekamukhāścaturbhujāḥ |",
  "SA21n2863:192": "aruṇa nīla pīta haritāḥ |",
  "SA21n2863:193": "hāsyā hāsyābhinayakaradvayā |",
  "SA21n2863:194": "lāsyā vajravajraghaṇṭādhārisagarvalāsyābhinayapradhānabhujadvayā |",
  "SA21n2863:195": "gītā kaṃ [ sīkā ] dhāribhujadvayā | nṛtyā",
  "SA21n2863:196": "kamalābhinayapradhānabhujadvayā |",
  "SA21n2863:197": "āsā manyadakṣiṇottara ( ṇetara )",
  "SA21n2863:198": "bhujadvayā ( ye )",
  "SA21n2863:199": "kapālakhaṭvāṅgau |",
  "SA21n2863:200": "puṣpā dhūpā dīpā gandhāḥ",
  "SA21n2863:201": "śvetadhūmradīpaśikhābharaktavarṇāścaturbhujā ekamukhāḥ |",
  "SA21n2863:202": "āsāṃ pradhānaikabhuje",
  "SA21n2863:203": "puṣpadhūpakaṭacchukadīpayaṣṭigandhaśaṅkham ( śaṅkhāḥ ) |",
  "SA21n2863:204": "itarabhujatrayeṣu ḍamarukapālakhaṭvāṅgāni |",
  "SA21n2863:205": "adarśā rasā sparśā dharmāḥ |",
  "SA21n2863:206": "śvetaraktaharitadhavalāścaturbhujaikamukhāḥ",
  "SA21n2863:207": "pradhānaikabhujena darpaṇa ( ṇa )",
  "SA21n2863:208": "rasapātraviśvavajradharmodayadharāḥ |",
  "SA21n2863:209": "itarabhujatrayeṣu ḍamarukapālakhaṭvāṅgāni |",
  "SA21n2863:210": "aṣṭapadamantraiḥ stutvā tataḥ",
  "SA21n2863:211": "sarvasattvābhyuddharaṇāyātmānaṃ tebhyo nirryātya pāpadeśanādyartha ratntrayaṃ",
  "SA21n2863:212": "me śaraṇamityādigāthāṃ tridhā paṭhediti puṇyasambhāra uktaḥ |",
  "SA21n2863:213": "tata ityādinā",
  "SA21n2863:214": "jñānasambhāramāha |",
  "SA21n2863:215": "pūjyapūjakapūjādīnāṃ vijñaptimātrāvyu ( bhyu )",
  "SA21n2863:216": "pagame oṃkāraḥ |",
  "SA21n2863:217": "svabhāvaśuddho'hamiti",
  "SA21n2863:218": "grāhakaviśuddhiḥ |",
  "SA21n2863:219": "punaḥ bhūyaḥ |",
  "SA21n2863:220": "śūnyaṃ vicintayediti tadvikalpamapi tyajet |",
  "SA21n2863:221": "cittamātraṃ tu cittamātramapi |",
  "SA21n2863:222": "vai tiṣṭhediti nādarupeṇāvasthitam |",
  "SA21n2863:223": "bodhisambhārabhāvanairiti bodhisambhāro mahākaruṇā tadbhāvanāsahitaṃ draṣṭavyam |",
  "SA21n2863:224": "mantroccāraṇapūrvakam |",
  "SA21n2863:225": "pratibhāsamātrajñānalakṣaṇāṃ śūnyatāṃ bhāvayedityarthaḥ",
  "SA21n2863:226": "pratibhasamātraṃ jñānamiti |",
  "SA21n2863:227": "oṃ svabhāvetyasyānantaram |",
  "SA21n2863:228": "tadayamarthaḥ |",
  "SA21n2863:229": "pūjādyanantaraṃ pūjādikaṃ pratityasamutpannacittamātratvenādhimucya |",
  "SA21n2863:230": "ātmanaḥ ṣiraḥ",
  "SA21n2863:231": "kaṇṭhahṛtsu heruketyakṣakṣaratrayaṃ bhāvayen |",
  "SA21n2863:232": "hetvapagatā [ ḥ ] sarvadharmāḥ |",
  "SA21n2863:233": "evaṃ uhāpagatāḥ | na kvacit",
  "SA21n2863:234": "sthitā iti nirudhya |",
  "SA21n2863:235": "evaṃrupān sarva [ dharmān ] ajānantaḥ |",
  "SA21n2863:236": "sattvā ātmātma ( tmi )",
  "SA21n2863:237": "yādigraheṇa saṃsaranti |",
  "SA21n2863:238": "tato'haṃ heruko bhūtvā",
  "SA21n2863:239": "tathā kariṣyāmi yathaivoṃ rupān sarvadharmān jñāsyantīti dharmālambanāṃ karuṇāmutpādya |",
  "SA21n2863:240": "oṃ svabhāvetyādi mantramuccārayan traidhātukaṃ śūnyaṃ paśyet |",
  "SA21n2863:241": "praṇidhānavaśāttaccittamuparyupari",
  "SA21n2863:242": "sthitam | sitaraktakṛṣṇa oṃ ā hūṃkārarupaṃ cintayet |",
  "SA21n2863:243": "tata oṃkārātkāyacakre devatā [ ḥ ] saṃsphārya jagadartha kṛtvā samāpattipūrvakaṃ",
  "SA21n2863:244": "dravīkṛtya tasminneva praveśayet |",
  "SA21n2863:245": "tathā āḥkārādvākcakradevatā |",
  "SA21n2863:246": "hūṃkārāccittacakradevatā |",
  "SA21n2863:247": "tata oṃkāraṃ āḥkāre āḥkāraṃ hūṃkāre u ( hūṃ )",
  "SA21n2863:248": "kāraṃ hakāre hakāraṃ śirasi śiro'rdhacandre",
  "SA21n2863:249": "ardhacandraṃ bindau binduṃ nāde antarbhāvyam |",
  "SA21n2863:250": "bālāgraśatasahasrabhāgapramāṇamavasthāpya",
  "SA21n2863:251": "dharmatāmanavabudhya saṃtvā [ ḥ ] saṃsaranti |",
  "SA21n2863:252": "tataśrcāhaṃ",
  "SA21n2863:253": "dharmatāmavabudhya avabodhayiṣyāmīti |",
  "SA21n2863:254": "karuṇānālambanaṃ mahābījabhūtā ( taṃ ) vibhāvyam |",
  "SA21n2863:255": "oṃ śūnyatājñānavajretyādi",
  "SA21n2863:256": "mantramuccārya nāda ta |",
  "SA21n2863:257": "tata iti śūnyatātaḥ |",
  "SA21n2863:258": "vibudhyeti nādarupeṇa svacittaṃ",
  "SA21n2863:259": "nabhasyavasthāpya |",
  "SA21n2863:260": "ādhārādheya [ rupaṃ ] saṃsthitam |",
  "SA21n2863:261": "vāyumaṇḍalādyupari",
  "SA21n2863:262": "gataṃ cintayet |",
  "SA21n2863:263": "ayamuddeśaḥ |",
  "SA21n2863:264": "asya nirdeśo yaṃkāretyādiṣu nirjātam |",
  "SA21n2863:265": "viśrvavajramityasyāyamarthaḥ |",
  "SA21n2863:266": "sumerupari paṃkārajaviśrvapadyakarṇikoparītyarthaḥ |",
  "SA21n2863:267": "vi [ śrvapadhmamaṣṭadala ] karṇikākeśarānvitamityasya padhmasya",
  "SA21n2863:268": "diganukrameṇa varṇā ucyante |",
  "SA21n2863:275": "pūrvādidigvāsiphalāruṇābhaṃ vam |",
  "SA21n2863:279": "pretāpiśācānadiśau ()",
  "SA21n2863:280": "ca dūrvāśyāmābjakṛṣṇaṃ khalu viśrvapadhmam ||",
  "SA21n2863:287": "ityasyāyamarthaḥ |",
  "SA21n2863:288": "pūrvādidigga ca pītam |",
  "SA21n2863:289": "nairkratyāṃ śyāmaḥ |",
  "SA21n2863:290": "eśānyāṃ kṛṣṇaḥ |",
  "SA21n2863:291": "ālikāliyogamiti vāmadakṣiṇāvartasthitā",
  "SA21n2863:292": "tvikā [ ba ] tadākṛti candramaṇḍalaṃ cintayediti vartate ||",
  "SA21n2863:293": "iti yogaḥ ||",
  "SA21n2863:300": "tanmadhye iti candramadhye |",
  "SA21n2863:301": "hūṃkāraṃ nādātkrameṇa",
  "SA21n2863:302": "niṣpannam | vajrasattvasvarupakamiti |",
  "SA21n2863:303": "hetuvajradhararupam |",
  "SA21n2863:304": "nānā raśminiśrcarantamiti |",
  "SA21n2863:305": "mukhanirgatapañcacakradevatābhirjagattanmayīkṛtya saṃharaṇena ca daśadigvartisiddhavīrayoginyā yogapūrvakaṃ dravīkṛtya nāde praveśya cintayediti |",
  "SA21n2863:306": "paramānandasvarupaṃ bījaṃ tatkālaṃ tadabhimukhī vyasya heturvajradhararupatā |",
  "SA21n2863:307": "bhagavatā sahajānandarupatvāt phalarupatā ||",
  "SA21n2863:308": "ityanuyogaḥ ||",
  "SA21n2863:315": "( tatpariṇatamiti )",
  "SA21n2863:316": "vajrapariṇatam |",
  "SA21n2863:317": "śrīherukavajramiti sakalaṃ",
  "SA21n2863:318": "bhagavantaṃ sahajarupaniṣpannam |",
  "SA21n2863:319": "tryakṣaradimantramuccārayet | oṃ āḥ hūṃ | oṃ",
  "SA21n2863:320": "sarvavī bhāvābhāvavikalpavināśanamokṣasvapupam |",
  "SA21n2863:321": "upacitasakalakuśalamūlatvena jaṭāmakuṭamaṇḍitam |",
  "SA21n2863:322": "dharmadhātoḥ samutthitatvāt kapālamālaśekharam |",
  "SA21n2863:323": "sravadvodhicittasvabhāvatvāt",
  "SA21n2863:324": "ardhacandradhāriṇam |",
  "SA21n2863:325": "sakalajagadarthakārakatvena viśrvajrākrānta ( laṅkṛta ) maulinam |",
  "SA21n2863:326": "mithyādṛṣṭiprahāṇādvikṛtānanam |",
  "SA21n2863:327": "mithyādṛṣṭiprahāṇādvikṛtānanam |",
  "SA21n2863:328": "caturmāravināśanāddaṃṣṭrītkaṭabhīṣaṇam |",
  "SA21n2863:329": "pañcatathāgatacaturdevīsvabhāvaśamathavipaśyanābhyāsaratiyogāt śūnyāṅgārādiraśmyānvitam ( śṛṅgārādirasānvitam ) |",
  "SA21n2863:330": "rāgādiviśodhakam vyāghracarmanivasanam |",
  "SA21n2863:331": "ālikālipañcāśadakṣarasvabhāvaśiromālām bhasmanā ( mālābhasmanā )",
  "SA21n2863:332": "sarvāngalepanaṃ tu sarvāṅgavyāpakabodhicittasūcakam |",
  "SA21n2863:339": "agrata iti sammukhaṃ bhagavantamāliṅgya",
  "SA21n2863:340": "sthitaityartha |",
  "SA21n2863:341": "khaṇḍamaṇditamekhaleti kapālakhaṇḍakṛtakaṭibhūṣaṇā |",
  "SA21n2863:342": "kalpāgnivaditi śūnyarupatayā jagadanupalambhasāmyāt |",
  "SA21n2863:343": "mahātejā iti",
  "SA21n2863:344": "suviśuddhajñānālokayogāt |",
  "SA21n2863:345": "sūryaprabhāmaṇḍalinī rajoyogād bru ( sra ) vantī |",
  "SA21n2863:346": "pañcamudrāvibhūṣitā boddhavyā |",
  "SA21n2863:347": "samāvaiṣṭyati ( samāveṣṭeti )",
  "SA21n2863:348": "vṛkṣārohakaraṇasthitā |",
  "SA21n2863:349": "mahāsukhakaruṇātmiketi",
  "SA21n2863:350": "vipaśyanārupe mahāsukhe nimagnapi jagadarthakārikā |",
  "SA21n2863:357": "irṣaddhāsyapariṣvaṅge nagnatvaṃ muktakeśatā |",
  "SA21n2863:361": "romañcaiḥ svasukhotpattau pañcaliṅgāni vāhyātaḥ ||",
  "SA21n2863:368": "sākṣalliṅgatrayasyoktairuhyāṃ liṅgadvayaṃ tataḥ |",
  "SA21n2863:372": "pañcavaktraṃ ( cakra )",
  "SA21n2863:373": "sthitā devyaḥ pañcaliṅgavyavasthitaḥ ||",
  "SA21n2863:380": "kuliśādiśodhanamucyate śuklahūṃkāreṇa vajraṃ kṛṣṇaṃ",
  "SA21n2863:381": "raktavyā ( ā ) kāreṇāraktatanmaṇipītavyā ( dya )",
  "SA21n2863:382": "kāreṇādhiṣṭhitāgraḥ |",
  "SA21n2863:383": "akāreṇa raktaṃ tridalaṃ",
  "SA21n2863:384": "padhyam | dyakāreṇa bīrabodhicittopalakṣakaṃ sitakiñjalkaṃ pītadyakārādhiṣṭhitāgram |",
  "SA21n2863:385": "tata oṃ vairocanīya ityādi |",
  "SA21n2863:386": "oṃ sarvabuddhaḍākinīya ityadibhyāṃ devyā hṛdayopahṛdayamantrābhyāṃ",
  "SA21n2863:387": "nābhau hṛdi |",
  "SA21n2863:388": "tathā svahṛdayopahṛdayopahṛdayamantrābhyāṃ kaṇṭhe lalāṭe ca",
  "SA21n2863:389": "bhagavartī bhagavān cumbayet |",
  "SA21n2863:390": "bhagavatī ca bhagavatī ca bhagavadhṛdhayopahṛdayamantrābhyāṃ",
  "SA21n2863:391": "kaṇṭhalalāṭayoḥ bhagavantaṃ cumbayet |",
  "SA21n2863:392": "tataḥ tryakṣareṇa ratimarabhet | bahyo'pi",
  "SA21n2863:393": "śobhanaraterayameva vidhiḥ |",
  "SA21n2863:400": "devīṣu vāme vīreṣu dakṣiṇe prathamaṃ cihnanyāso",
  "SA21n2863:401": "jñeyam | jaṭāmakuṭāṅkapaṭṭakā iti jaṭāmukuṭino vīrapaṭṭayuktāścetyarthaḥ | cūḍeti",
  "SA21n2863:402": "rucakaparyāyaḥ |",
  "SA21n2863:403": "dvau hi rupo manoharāviti vidigvartibhyo mānukhī ( ṣī )",
  "SA21n2863:404": "mukhā dvivarṇā na tu kākādimukhā |",
  "SA21n2863:405": "pretāsanamahāghorā ityaṣṭāvapi boddhavyāḥ |",
  "SA21n2863:406": "śmaśānavāsinītvācchavāsanatvamāsām |",
  "SA21n2863:407": "vīrayoginīnāmiti vārāhyādīnām |",
  "SA21n2863:414": "devatākārābhiniveśatyāgāya",
  "SA21n2863:415": "sarvajñatālābhadarśanāya ca bodhipākṣikadharmayojanā |",
  "SA21n2863:416": "tatra kāyānusmṛtyupasthānaṃ",
  "SA21n2863:417": "rupaskandhaparijñānaprārambhaḥ |",
  "SA21n2863:418": "vedanāsmṛtyupasthānaṃ",
  "SA21n2863:419": "vedanāskandhaparijñānaprārambhaḥ |",
  "SA21n2863:420": "dharmānusmṛtyupasthānaṃ saṃjñāsaṃskāraskandhayormāyopamatvenāvadhāraṇaḥ ( ṇā ) |",
  "SA21n2863:421": "vijñānaskandhasya svarupeṇa",
  "SA21n2863:422": "prativedhaśrcittanusmṛtyupasthānam |",
  "SA21n2863:423": "saddharmaśrutādyabhilāṣe atyantādaraḥ",
  "SA21n2863:424": "chandaridhi ( ṛddhi ) pādaḥ |",
  "SA21n2863:425": "vīrye'navaratābhyāso vīryakraddhipādaḥ |",
  "SA21n2863:426": "mīmāṃsākraddhipādo'tyantavicaraṇā |",
  "SA21n2863:427": "cittakraddhipādo bodhau sākṣātkriyāyāmatiśayaḥ |",
  "SA21n2863:428": "satyaratnatrayakarmaphaleṣvabhisaṃpratyayaḥ śraddhendriyamidaṃ tadityavadhāraṇe",
  "SA21n2863:429": "eśvaryam | vīryendriyamavaśyakartavyaṃ tathāvadhāraṇam |",
  "SA21n2863:430": "smṛtīndriyamamuṣītasmaraṇatayā'vidyā'navakāśaḥ |",
  "SA21n2863:431": "samādhīndriyaṃ cittaikāgratāyāmaiśrvaryam |",
  "SA21n2863:432": "prajñendriyaṃ heyopādeyatvenāvadhāraṇam |",
  "SA21n2863:433": "pañcendriyāṇyevo prakarṣaparyantāvasthāyām |",
  "SA21n2863:440": "śraddhābalādivyapadeśaṃ labhamānāni śraddhābalaṃ",
  "SA21n2863:441": "vīryabalaṃ smṛtibalaṃ samādhibalaṃ prajñābalamityabhidhīyante |",
  "SA21n2863:442": "samādhisambodhyaṅgaṃ",
  "SA21n2863:443": "samādhireva bodhiḥ kāraṇam |",
  "SA21n2863:444": "vīryasambodhyaṅgaṃ kausīdyasyānavakāśaṃ |",
  "SA21n2863:445": "prītisambodhyaṅgaṃ ku [ śa ] le āgrahaḥ |",
  "SA21n2863:446": "prasrabdhisambodhyaṅgaṃ kuśale",
  "SA21n2863:447": "karmaṇī cittasya karmaṇyatā |",
  "SA21n2863:448": "dharmapravicayasambodhyaṅgaṃ nairātmyasvarupasya",
  "SA21n2863:449": "tathatetyavadhāraṇam |",
  "SA21n2863:450": "smṛtisambodhyaṅgaṃ avismaraṇaśīlatā |",
  "SA21n2863:451": "upekṣāsambodhyaṅgaṃ",
  "SA21n2863:452": "samādhau anābhogatā |",
  "SA21n2863:459": "samyagdṛṣṭiḥ buddhavākye",
  "SA21n2863:460": "paramagauravamaviparītārthapratipattiḥ |",
  "SA21n2863:461": "samyaksaṅkalpaḥ prārabdharasya satkṛtyasyāparityāgaḥ |",
  "SA21n2863:462": "samyakvāk sattvāvisaṃvādakaṃ vacanam |",
  "SA21n2863:463": "samyakkarma daśakuśalānatikrame kṛtyam |",
  "SA21n2863:464": "samyaġājīvaḥ sattvāviheṭhanārupeṇa",
  "SA21n2863:465": "jīvanam | samyagvyāyāmaḥ kuśalārcan ( rtha ) ghaṭanam |",
  "SA21n2863:466": "samyaksmṛtiḥ buddhavacanānusmaraṇam |",
  "SA21n2863:467": "samyaksamādhi [ ḥ ] śrīherukarupālambanam |",
  "SA21n2863:474": "athāta ityādi sugamam |",
  "SA21n2863:475": "pīṭhetyādi yathākramaṃ",
  "SA21n2863:476": "daśabhūmiviśuddhapīṭhādiyojanayetyarthaḥ |",
  "SA21n2863:477": "tatra pīthopapīṭhādayaḥ kramaśaḥ",
  "SA21n2863:478": "pramuditā vimalā prabhākarī arciṣmatī sudurjayā abhimukhī duraṃgamā acalā",
  "SA21n2863:479": "sādhumatī dharmameghā |",
  "SA21n2863:480": "pūṃ jetyādi |",
  "SA21n2863:481": "atropadeśaḥ |",
  "SA21n2863:482": "pūṃ jāṃ ityādi sarva sānusvāraṃ",
  "SA21n2863:483": "nirupayatā ( tāṃ )",
  "SA21n2863:484": "pūṃkārādyakṣarapariṇatāni ardha ( tra )",
  "SA21n2863:485": "śūnyacakrākārāṇi pīṭhādisthānāni śiraḥprabhṛti ( ṣu )",
  "SA21n2863:486": "kṣaṭiti draṣṭavyāni |",
  "SA21n2863:487": "teṣu pīṭhādiṣu tatsthānaṃ",
  "SA21n2863:488": "gatā nāṅyataddevatārupeṇa pariṇamya vyavathitādraṣṭavyāḥ |",
  "SA21n2863:489": "karṇa iti karṇavivarābhyantare |",
  "SA21n2863:490": "evaṃ mukhanābhiliṅgagudabhrūmadhye cakṣunrnāsikāsvapi boddhavyam | khecarīti",
  "SA21n2863:491": "svargagatānāṃ sangrahaḥ |",
  "SA21n2863:492": "bhūcaryā matyānām |",
  "SA21n2863:493": "pātāla vāsinyā ( nīti )",
  "SA21n2863:494": "pātālagatānām |",
  "SA21n2863:495": "yathā bāhyo pīṭhādisamīpasthā",
  "SA21n2863:496": "nadyastoyena dho ( po )",
  "SA21n2863:497": "ṣaṃ kurvanti tadvaddehe'pi nāṅyo nakhādīnāṃ ghoṣaṃ ( poṣaṃ )",
  "SA21n2863:498": "kurvantīti samānatā |",
  "SA21n2863:499": "bāhyo vajrapīṭhaṃ",
  "SA21n2863:500": "mahābodhisaṃjñkaṃ sthānaṃ nairañjanā ca nadī |",
  "SA21n2863:501": "dehe mahāsukhacakraṃ vajrapīṭhamavadhūtī",
  "SA21n2863:502": "nirañjanā | vaktravāmadakṣiṇanāsāpuṭagudaddvāreṣu krameṇa kākāsyādayo",
  "SA21n2863:503": "dvārapālinyaḥ |",
  "SA21n2863:504": "savyāvasavyaśrotrasavyāvasavyanetreṣu yamadādyādayaḥ |",
  "SA21n2863:505": "lalāṭakaṇṭhanābhikamalakarṇīkāsu",
  "SA21n2863:506": "ḍākinyādayaścatasraḥ |",
  "SA21n2863:507": "bhaṭṭārakabhaṭṭārikāsthānam upadeśādvoddhavyam | iti",
  "SA21n2863:508": "sampūrṇakāyamaṇḍalaṃ muhurmuhurdṛdamakhimoktavyam |",
  "SA21n2863:515": "uktārthameva nigamayati kāyavākcittabhedeneti |",
  "SA21n2863:516": "svargamatryapā tālamekamūrtirbhavediti |",
  "SA21n2863:517": "svargādibhirabhinnadehaṃ tatsvabhāvo",
  "SA21n2863:518": "bhagavān bhavedutpadyata ityarthaḥ |",
  "SA21n2863:519": "kathamityāha kāyavākcittabhedeneti |",
  "SA21n2863:520": "bahyābhyantarābhyāṃ cakratrayasya bhāva iti yāvat |",
  "SA21n2863:521": "kuta ityāhatryakṣarasvabhāvata",
  "SA21n2863:522": "iti | tryakṣarānnādapariṇāmadvāreṇa svasvabhāva utpattiryasya hakārasya sa tathā ,",
  "SA21n2863:523": "tasyā sahajānandarupeṇetyarthaḥ | kṣaṭiteti |",
  "SA21n2863:524": "cihnādinirapekṣatvena kṣaṭitākārayogātmā |",
  "SA21n2863:525": "bhagavatyā sahaiva sakṛnniṣpatteḥ kṣaṭitākāramudravat |",
  "SA21n2863:526": "ātmasamakālameva prajñāvānityarthaḥ |",
  "SA21n2863:527": "kṣaṭitā sarvasarveṇeti kūṭāgāravīravīreśvarībhiḥ",
  "SA21n2863:528": "saha sakṛnniṣpatteḥ |",
  "SA21n2863:529": "kṣaṭitā mantramuccarediti niṣpattisamakālamevo mantroccāraṇāt |",
  "SA21n2863:530": "mantratrayamāha oṃ āḥ huṃ ityādi |",
  "SA21n2863:531": "tata ityādyuddeśaślokaḥ āśu iti",
  "SA21n2863:532": "arghādinirapekṣaḥ |",
  "SA21n2863:533": "athetyādi nirdeśaḥ |",
  "SA21n2863:534": "oṃ ha ityādayo",
  "SA21n2863:535": "mantradevatayorabhedāttattadvarṇā mantrā bhāvyāḥ |",
  "SA21n2863:536": "vajrasattvādīnāṃ varṇānukrameṇa",
  "SA21n2863:537": "sitapītaraktakṛṣṇaraktaharitā |",
  "SA21n2863:538": "sarvāṅgeṣvasramiti carṃādyaṃtaragatāḥ |",
  "SA21n2863:539": "paramāṇavasnabha )",
  "SA21n2863:540": "svabhāvastadvarṇāḥ |",
  "SA21n2863:541": "tadeva bhagavatyām | oṃ vaṃ",
  "SA21n2863:542": "ityādayo mantrāḥ raktanīlasitapītaharitadhūmradhūsaravarṇāḥ | athavā",
  "SA21n2863:543": "tattanmantraniṣpannānne ( nneṣva )",
  "SA21n2863:544": "ṣṭasthāneṣu vajrasattvādayo bhāvyāḥ |",
  "SA21n2863:545": "vajrasattvavairocanapadhmanartteśvaraśrīherukavajrasūryapamābhyaḥ ( paramāśvāḥ ) |",
  "SA21n2863:546": "sitapītaraktakṛṣṇaraktaharitavarṇāḥ | trimukhaḥ",
  "SA21n2863:547": "ṣaṭbhujo vajrī |",
  "SA21n2863:548": "tadanye caturbhujā ekavaktrāḥ |",
  "SA21n2863:549": "vajraṃ ḍamarukaṃ śiraḥsavyeṣu",
  "SA21n2863:550": "ghaṇṭākapālakhaṭvāṅgāni vāmeṣu |",
  "SA21n2863:551": "śuklaraktakṛṣṇāni pradhānasavyetaramukhāni",
  "SA21n2863:552": "vajriṇaḥ'nyeṣāṃ cakraṃ padhmaṃ vajraṃ ratnaṃ khaḍgameva ca |",
  "SA21n2863:553": "ḍamarukaṃ ca",
  "SA21n2863:554": "savyayoḥ | ghaṇṭākapālakhaṭvāṅgaṃ punarvāmayoḥ |",
  "SA21n2863:555": "vārāhī raktanīla haritamukhā",
  "SA21n2863:556": "vāme kapālaṃ khaṭvāṅgaṃ pāśam |",
  "SA21n2863:557": "dakṣiṇe aṅkuśabrahmāmuṇḍakartidhāriṇī | yoginī",
  "SA21n2863:558": "mohanī sañcālanī ( raṇī )",
  "SA21n2863:559": "santrāsanī caṇḍikāḥ nīlasita pīta",
  "SA21n2863:560": "haritadhūmradhūsaravarṇāḥ |",
  "SA21n2863:561": "muktakeśā nagnāḥ |",
  "SA21n2863:562": "trinetrāḥ |",
  "SA21n2863:563": "ṣaḍbhujāḥ sakapālakhaṭvāṇgaghaṇṭā [ ḥ ] ca vāme |",
  "SA21n2863:564": "punardakṣiṇe ḍamarukartidhāriṇyaḥ",
  "SA21n2863:565": "sarvavā ( sarvā )",
  "SA21n2863:566": "ālīdāsanasthāḥ trinetrāḥ | ye cātra",
  "SA21n2863:567": "śubhrāśrcandraprabhāmaṇḍalinaḥ anye tu sūryaprabhāmaṇḍalinaḥ |",
  "SA21n2863:568": "athāgragranthyā",
  "SA21n2863:569": "tarjanībhyāḥ ( athāgragranthitarjanībhyāṃ )",
  "SA21n2863:570": "granthīkṛtya etaduktaṃ bhavati |",
  "SA21n2863:571": "vīṇādiṣoḍaśadevībhiḥ",
  "SA21n2863:572": "pūjyamānam |",
  "SA21n2863:573": "mugrāmantrābhyāṃ preritaṃ hṛdvījaraśmibhirākṛṣṭaṃ",
  "SA21n2863:574": "jñānacakradaśadigvartivīreśrvarīpariṇāmarupam |",
  "SA21n2863:575": "kṣaṭītyātmani praveśayet | tata oṃ",
  "SA21n2863:576": "yogetyādi mantramuccārayan kamalāvartena hṛdayamudrān dadyāt |",
  "SA21n2863:577": "hṛdayamudropasaṃhare",
  "SA21n2863:578": "āliṅganabhinayaṃ kurvan oṃ āḥ hūṃ ityādi pūrvoktamantratrayeṇādhitiṣṭhediti |",
  "SA21n2863:585": "tato abhiṣekaṃ dāpayet |",
  "SA21n2863:586": "tatrāyamupadeśaḥ |",
  "SA21n2863:587": "jñānacakrākarṣaṇasamakālamākṛṣṭabhirvajrayoginībhirjñānāmṛtapūrṇakapālaḍamarukadhāriṇībhiḥ |",
  "SA21n2863:588": "hṛdrījanirgatavīṇādidevīpūjārcitābhiḥ |",
  "SA21n2863:589": "yathāhītyādi vāriṇetyantaṃ paṭhantībhirīṣadāvarjitam",
  "SA21n2863:590": "vāmakarakapālanipatat jñānāmṛtadhārābhirabhiṣicyamānaṃ samayamaṇḍalaṃ",
  "SA21n2863:591": "mahāsukhamayamātmānaṃ vibhāvya |",
  "SA21n2863:592": "śeṣāmbuniṣpannān tathāgatān svaśirasidevatānāṃ",
  "SA21n2863:593": "ca dṛṣṭvā oṃ sarvatathāgatetyādi mantramuccārayet |",
  "SA21n2863:594": "tato bhagavato'kṣobhyam |",
  "SA21n2863:595": "bhagavatyā vairocanam |",
  "SA21n2863:596": "ḍākinyādīnāṃ",
  "SA21n2863:597": "ratnasambhavaṃ cittavākkāyacakragatānām akṣobhyāmitābhavairocanān",
  "SA21n2863:598": "samayacakragatān ( nāṃ )",
  "SA21n2863:599": "amoghasiddhim |",
  "SA21n2863:600": "tataḥ pūjāpurassaraṃ rasākhyaṃ",
  "SA21n2863:601": "devyupadaukitāmṛtamāsvādya hṛdayādyaṣṭapadāntamantraiḥ stuti kuryāt | tataḥ",
  "SA21n2863:602": "pañcajñānatrikāyātmakaṃ pratibimbopamaṃ maṇḍalamadhimuñcet |",
  "SA21n2863:603": "jāpānantaramuktaṃ",
  "SA21n2863:604": "balividhānam |",
  "SA21n2863:605": "paśrcādvaktavyam |",
  "SA21n2863:606": "nakhadantādayaḥ khaṇḍakapālina iti khaṇḍakapālinasvabhavā",
  "SA21n2863:607": "nakhadantādaya ityarthaḥ |",
  "SA21n2863:614": "brahyāsūtrādīnāṃ mantrādirupāṃ viśuddhimāha",
  "SA21n2863:615": "mūlamantrādītyādi punaḥ punaḥ evaṃ sūcayati |",
  "SA21n2863:616": "mudrādhāraṇaṃ vināpi mantroccāraṇā [ t ] devatā dṛśyaṃ phalaṃ syādityarthaḥ |",
  "SA21n2863:617": "mūlamantro",
  "SA21n2863:618": "mālāmantra |",
  "SA21n2863:619": "sa evādiḥ śreṣṭhaḥ |",
  "SA21n2863:620": "vīramiti vīrasya |",
  "SA21n2863:621": "dhātukalpitamiti nakhadantādayaḥ",
  "SA21n2863:622": "ityarthaḥ | ṣaṭbhi kavacasya vīreṇeti ṣaṭbhirbhagavataḥ kavacamantrairityarthaḥ |",
  "SA21n2863:623": "mudreyamiti ṣaṇmudrā ityarthaḥ |",
  "SA21n2863:624": "vajravārāhyā yanmantramiti |",
  "SA21n2863:625": "devyā mālāmantreṇa",
  "SA21n2863:626": "ityarthaḥ | sarvabuddhaḍākinya iti oṃ sarvabuddhaḍākinīye vajravarṇanīye hūṃ hūṃ",
  "SA21n2863:627": "phaṭ svāhetyanenetyarthaḥ |",
  "SA21n2863:628": "ṣaḍyoginīmantreṇeti kavacagataṣaḍyoginīmantraiḥ |",
  "SA21n2863:629": "sarvacakrasya yoginya iti ḍākinyādiyamamathanīparyantānāṃ devanāṃ",
  "SA21n2863:630": "mantrairityarthaḥ |",
  "SA21n2863:631": "mantrayānakaroṭakamiti mantro'tra karuṇā |",
  "SA21n2863:632": "vairocanīti",
  "SA21n2863:633": "yanmantramiti oṃ vajravairocanīye hūṃ hūṃ phaṭ svāhetyanena |",
  "SA21n2863:634": "evamityādinā paryaṭanakāle",
  "SA21n2863:635": "yatkartavyaṃ |",
  "SA21n2863:636": "tadāha vicintyeti |",
  "SA21n2863:637": "kavacayitvā ākṣepamantraḥ | oṃ",
  "SA21n2863:638": "sumbhanisumbhetyādi caturmukhamantraḥ |",
  "SA21n2863:639": "tena surakṣitau muhurmuhuruccāraṇāt |",
  "SA21n2863:640": "brahyācarya sadā bhūtveti saṃvārarupeṇa sarvabhāvānāṃ nirantaravyavalokanaṃ kṛtvetyarthaḥ |",
  "SA21n2863:641": "mantraṃ vai aṣṭapadāccircatamiti aṣṭapadamantrairanyānarcayet |",
  "SA21n2863:642": "gurubuddhabodhisattvāṃśrca dṛṣṭvā saṃvarādhimokṣeṇāṣṭapadamantreṇārcayitvā",
  "SA21n2863:643": "vandanādikaṃ kuryāt caryākāle tu ātmānameva |",
  "SA21n2863:644": "cakrasaṃvarasaṃvara iti",
  "SA21n2863:645": "nijarupābhinnatraidhātukasvabhāva ityarthaḥ |",
  "SA21n2863:646": "saptatriṃśaddhodhipākṣikadharmayojanayā",
  "SA21n2863:647": "sarvajñatā |",
  "SA21n2863:648": "daśabhūmiviśuddhapīṭhādiyojanayā mārgajñatā tathā",
  "SA21n2863:649": "kavacādiviśuddhiyojanaparyantena",
  "SA21n2863:650": "sarvākārajñatā proktā ||",
  "SA21n2863:651": "ityatiyogaḥ ||",
  "SA21n2863:658": "idārnī mahāyogena vajradharatāmāha | ālikāliṃ",
  "SA21n2863:659": "puro dhyātvetyādi |",
  "SA21n2863:660": "puraḥ prathamaṃ candraṃ bhāvayedityarthaḥ | tasyeti",
  "SA21n2863:661": "candrasya | akṣaramiti hūṃkāram |",
  "SA21n2863:662": "paramaṃ padamiti vajradharasya bījam |",
  "SA21n2863:663": "bhāvayeddevatārupamiti hūṃ pariṇāmena |",
  "SA21n2863:664": "kāyavākcittaṃ ca va ( cittava )",
  "SA21n2863:665": "jriṇamiti vajradharamityarthaḥ |",
  "SA21n2863:666": "piṇḍātītaṃ",
  "SA21n2863:667": "bhavettsyeti bhagavataḥ krameṇa līyamānasya nādarupatāṃ bhāvayedityarthaḥ |",
  "SA21n2863:668": "cittameva cittanādamapi |",
  "SA21n2863:669": "acintyamityadinā pūrvakameva nirdiśati |",
  "SA21n2863:670": "sopīti tamapi |",
  "SA21n2863:671": "cittaṃ caiva na lakṣitamiti acintyamityapi vikalpo na bhavedityarthaḥ | asya",
  "SA21n2863:672": "nirdeśaḥ | citye ( ntaye ) dityādi |",
  "SA21n2863:673": "sopyacintyaṃ veti acintyameva",
  "SA21n2863:674": "bhāvayedityarthaḥ |",
  "SA21n2863:675": "dhāraṇīmiti mahāmudrāsiddhim |",
  "SA21n2863:676": "anena sarveṇedaṃ pratipāditam",
  "SA21n2863:677": "ālikālipaktiṃ pañcaraśmikāṃ spharanrtī cakradevatāmuccārayan dakṣiṇena vāyunā",
  "SA21n2863:678": "niḥsṛtya jagattricakrīkṛtyānādisiddhavīrayoginīsamarasībhūtāṃ vāmapuṭena",
  "SA21n2863:679": "praviśya nābhau pratibimbatattvākāracandramaṇḍalībhūtāṃ vicintya tatra kṣaṭiti",
  "SA21n2863:680": "hūṃkāraṃ taccandrabījapariṇataṃ bhagavantaṃ śuklavarṇamālīdāsanasthamākāśalikhitacitrasadṛśaṃ",
  "SA21n2863:681": "dvibhujamekavakāṃ vajravajraghaṇṭādharobhayabhujābhyāṃ",
  "SA21n2863:682": "vajrakapāladhāridvibhujaikamukharaktavajravārāhīsamāpannaṃ dṛṣṭvā",
  "SA21n2863:683": "māyāsuratadhvaninā samākṛṣṭa ( ṣya )",
  "SA21n2863:684": "traidhātukātmakaṃ",
  "SA21n2863:685": "cakramātmani krameṇāntarbhāvayet |",
  "SA21n2863:686": "kramastu jagataḥ śmaśāneṣu | śmaśānāni",
  "SA21n2863:687": "bāhyācakre |",
  "SA21n2863:688": "bāhyācakraṃ kāyacakre |",
  "SA21n2863:689": "kāyacakraṃ vākcakre |",
  "SA21n2863:690": "vākcakraṃ cittacakre |",
  "SA21n2863:691": "cittacakraṃ ca diggataḍākinyādiṣu |",
  "SA21n2863:692": "eśānyādividiggatarupiṇyādiṣu |",
  "SA21n2863:693": "ḍākinyādīnāṃ",
  "SA21n2863:694": "yathāsvaṃ bhagavanmukheṣu |",
  "SA21n2863:695": "bhagavānbhagavatī ca dvibhujatatprajñāyāḥ | te ca",
  "SA21n2863:696": "samastaratena mahārāgadravāpanne taddravapariṇataṃ sindūraraktamuktāphalasadṛśaṃ",
  "SA21n2863:697": "haṃkāraṃ mahāsukhamayaṃ ukāraśrca śirasi śiro'rdhacandre ardhacandraṃ bindau",
  "SA21n2863:698": "binduṃ nādenādamātraṃ bālāgraśatasahasrabhāgarupaṃ paśyet |",
  "SA21n2863:699": "adhimātrastu tamapi",
  "SA21n2863:700": "nopalambhayedityarthaḥ ||",
  "SA21n2863:701": "iti mahāyogaḥ ||",
  "SA21n2863:708": "khede sati kṣaṭiti maṇḍalacakramadhimucya",
  "SA21n2863:709": "nābhicandre śrvetaraktaṃ hūṃkāraṃ nādaṃ vā dṛṣṭvā tryakṣaramuccārayan tasmād",
  "SA21n2863:710": "nādād yathopadeśaṃ nirgamavāyunā pañcacakrāṇi saṃsphārya jagadartha kārayitvā",
  "SA21n2863:711": "punaruccārayan |",
  "SA21n2863:712": "mantreṇa sahaiva magalāsūtrākarṣaṇanyāyena praveśavāyunā",
  "SA21n2863:713": "tasminneva nāde praveśayet |",
  "SA21n2863:714": "evaṃ punaḥ punaḥ kuryāt ||",
  "SA21n2863:715": "iti vajrajāpaḥ ||",
  "SA21n2863:722": "tathaiva tasmādeva nādāt hṛdayopahṛdayamuccārayan |",
  "SA21n2863:723": "cakrasambaradevatā vṛndaspharaṇasaṃharaṇena pūrvavat hṛdayopahṛdayamantrān",
  "SA21n2863:724": "japet | pratyekaṃ devatā mantroccāraṇaparisamāptau pratyekaṃ saṃapharaṇasaṃharaṇam",
  "SA21n2863:725": " || iti samayajāpaḥ ||",
  "SA21n2863:732": "sarvadharmasamatāhaṅkāreṇa mantrāmālāṃ svamukhe",
  "SA21n2863:733": "eva praviśya vajramārgeṇa padhme gatvā avadhutīmārgeṇotthāya bhagavatīmukhannisṛtya",
  "SA21n2863:734": "svamukhadvāreṇa praveśya nāde viliya punastasmādutthāya pūrvavat tadeva",
  "SA21n2863:735": "bhramanrti bhāvayan mālāmantraṃ japet ||",
  "SA21n2863:736": "iti dolājāpaḥ ||",
  "SA21n2863:743": "tato vakṣyamāṇakrameṇa baliṃ datvā pravidhānaṃ",
  "SA21n2863:744": "ca kṛtvā devatārupeṇa viharediti |",
  "SA21n2863:745": "śmaśāna ( snāna )",
  "SA21n2863:746": "kāle'bhiṣekavidhiṃ vidadhīta |",
  "SA21n2863:747": "bhojanakāle tu",
  "SA21n2863:748": "maṇḍalacakrātmakaṃ dehaṃ kṣaṭiti vicintya yathāvidhānaṃ baliṃ datvā tryakṣareṇa",
  "SA21n2863:749": "vā balimadhiṣṭhāya oṃ kha kha khāhītyādi mantreṇaikavāroccāritena dippālebhyo",
  "SA21n2863:750": "datvā jvalanādividhinā śodhitabhaktadikaṃ sarvadharmasamatāhaṅkārapūrvakaṃ oṃ",
  "SA21n2863:751": "samayaśuddhāḥ sarvadharmāḥ samayaśuddho'hamiti |",
  "SA21n2863:752": "hūṃkāreṇa śuklavajramaryi",
  "SA21n2863:753": "jihyāṃ vidhāya oṃ amṛtodakaḥ hūṃ hūṃ ṭha ṭha trāṃ āḥ khaṃ hūṃ ityanenadhiṣṭhāya",
  "SA21n2863:754": "tryakṣareṇa ca nābhisthahūṃkāraṃ dadan vā prīṇayediti |",
  "SA21n2863:761": "madhyāhnsandhyāyāṃ tu dhyānagṛhaṃ praviśya",
  "SA21n2863:762": "tryakṣarādimantratramuccārayan kṣaṭiti maṇḍalacakramadhimucya pūrvavat sarva kṛtvā",
  "SA21n2863:763": "yathāsukhaṃ viharediti |",
  "SA21n2863:764": "ardharātrasandhyāyāṃ madhyāhnasandhyāvat sarva kṛtvā",
  "SA21n2863:765": "sarvavāgvyāpāram ālikālimayaṃ buddhā ( ddhvā )",
  "SA21n2863:772": "oṃ ehyohi mahāvīra śuddhavākyasya deśaka |",
  "SA21n2863:776": "śūnyatājñānamevaṃ ca sṛṣṭisaṃhārasvayaṃ ( saṃ ) bhava ||",
  "SA21n2863:783": "akārādikṣakārāntaṃ huṃ huṃ phaḍityuccārya",
  "SA21n2863:784": "prabhāsvaramāmukhīkṛtya nidrāyāśrca prabhāsvaratāmadhimuccan śayīta | sarvāsu",
  "SA21n2863:785": "sandhyāsu prate śatākṣaraṃ paṭhet |",
  "SA21n2863:786": "punaḥ prabhātasandhyāyāṃ prabhāsvarotthitaṃ",
  "SA21n2863:787": "maṇḍalacakramadhimucya oṃ ehyohi ityādi sarva mantraṃ patito ( paṭhitvo )",
  "SA21n2863:788": "tthāya pūrvoktaṃ sarvamanutiṣṭhe ( nuṣṭhe ) diti |",
  "SA21n2863:795": "khaṭvāṅgadevatāmūrtirityādi na kvacit",
  "SA21n2863:796": "sthitamitiparyanto grantho vairocanīti yanmantraṃ kapālakṛtaśekharamityasmādantaraṃ",
  "SA21n2863:797": "yojitavyam |",
  "SA21n2863:798": "devatāmūrtiriti śriherukamūrtiḥ yaddhā kaṅkāladaṇḍaḥ khaṭvāṅgasvabhāvo",
  "SA21n2863:799": "boddhavyaḥ |",
  "SA21n2863:800": "prajñā śūnyatā |",
  "SA21n2863:801": "ḍamarukadhvaniḥ pratiśrutkopamapratipādakaḥ |",
  "SA21n2863:802": "upalambha svabhāvāddinastu bhagavān |",
  "SA21n2863:803": "anupalambhasvabhāvatvādyoginī rātriḥ |",
  "SA21n2863:804": "nirvāṇaṃ nirgatavīraṃ ṣaṣṭhamaṃ cittanirmitamiti |",
  "SA21n2863:805": "nirvāṇasmaraṇaṃ",
  "SA21n2863:806": "jīvitendrayanirodhāt |",
  "SA21n2863:807": "nirvaṇānnirgato gandharvasattvaḥ |",
  "SA21n2863:808": "sa ca pañcābhijño lakṣaṇālaṅkṛtaśarīro",
  "SA21n2863:809": "jñānasvabhāvo vyavasthāpayate |",
  "SA21n2863:810": "vijñānamātrarupatvāt ṣaṣṭhatvena mīyate",
  "SA21n2863:811": "niśrcīyata iti ṣaṣṭhamam |",
  "SA21n2863:812": "ata eva cittanirmitamiti vīraṃ bhagavantaṃ",
  "SA21n2863:813": "tadrūpatvena adhimucya bhāvayedityarthaḥ |",
  "SA21n2863:814": "yadvā nirvāṇaṃ dharmadhātuḥ",
  "SA21n2863:815": "kleśopakleśaśamanāt |",
  "SA21n2863:816": "nirgatasattvārthakārako jñānamayaṃ kāyaḥ | ṣaṣṭhaṃ",
  "SA21n2863:817": "dharmadhātumā ( ma )",
  "SA21n2863:818": "tiparicchinatīti |",
  "SA21n2863:819": "tattathā cittanirmitamiti |",
  "SA21n2863:820": "vineyacittama pekṣatayā pratibhāṣaṇāt |",
  "SA21n2863:821": "śuddhaṃ ( ddha )",
  "SA21n2863:822": "dharmasya nirmāṇaṃ vārāhīrupadarśitamiti |",
  "SA21n2863:823": "śuddhadharmaḥ śūnyatā |",
  "SA21n2863:824": "tatsvabhāvā vārāhītyarthaḥ |",
  "SA21n2863:825": "cittaviśrāmya ityādinā dṛṣṭānuśaṃsamāha",
  "SA21n2863:826": " | yogiti yoginaḥ |",
  "SA21n2863:827": "nirvāṇaṃ maraṇam |",
  "SA21n2863:828": "naiva darśiṃtaṃ na pāramārthikam |",
  "SA21n2863:829": "gṛhādṛhāntaragamanamiva",
  "SA21n2863:830": "cittaviśrāmamātraṃ maraṇamityākūtam |",
  "SA21n2863:831": "cyutikāle maraṇakāle |",
  "SA21n2863:832": "yogīnāmiti yogī |",
  "SA21n2863:833": "mṛtyurnāmavikalpo'yamiti laukiko'yaṃ vikalpaḥ |",
  "SA21n2863:834": "khecarīpadamiti",
  "SA21n2863:835": "prabhāsvarapadam |",
  "SA21n2863:836": "etaduktaṃ bhavati |",
  "SA21n2863:837": "maraṇasamaye śrīherukavārāhīprabhṛtivīravajrayoginīnībhirnānāvidhipuṣpadhūpadhvajapatākādivyagrakarābhiḥ",
  "SA21n2863:838": "prabhāsvarapade praveśayet ityarthaḥ | ||",
  "SA21n2863:845": "śrīcakrasambarābhisamayavyākhyā samāptā kṛtiriyaṃ",
  "SA21n2863:846": "śāśvatavajrasya () ||"
}