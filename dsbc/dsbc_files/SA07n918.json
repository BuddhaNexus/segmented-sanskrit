{
  "SA07n918:0": "CANTO IV",
  "SA07n918:1": "tatastasmātpurodyānā-",
  "SA07n918:2": "tkautūhalacalekṣaṇāḥ |",
  "SA07n918:3": "pratyujjagmurnṛpasutaṃ",
  "SA07n918:4": "prāptaṃ varamiva striyaḥ ||1 ||",
  "SA07n918:5": "abhigamya ca tāstasmai",
  "SA07n918:6": "vismayotphullalocanāḥ |",
  "SA07n918:7": "cakrire samudācāraṃ",
  "SA07n918:8": "padmakośanibhaiḥ karaiḥ ||2 ||",
  "SA07n918:9": "tasthuśca parivāryainaṃ",
  "SA07n918:10": "manmathākṣiptacetasaḥ |",
  "SA07n918:11": "niścalaiḥ prītivikacaiḥ",
  "SA07n918:12": "pibantya iva locanaiḥ ||3 ||",
  "SA07n918:13": "taṃ hi tā menire nāryaḥ",
  "SA07n918:14": "kāmo vigrahavāniti |",
  "SA07n918:15": "śobhitaṃ lakṣaṇairdīptaiḥ",
  "SA07n918:16": "sahajairbhūṣāṇairiva ||4 ||",
  "SA07n918:17": "saumyatvāccaiva dhairyācca",
  "SA07n918:18": "kāścidenaṃ prajajñire |",
  "SA07n918:19": "avatīrṇo mahī sākṣād",
  "SA07n918:20": "guḍhāṃśuścandramā iti ||5 ||",
  "SA07n918:21": "tasya tā vapuṣākṣiptā",
  "SA07n918:22": "nigṛhītaṃ jajṛmbhire |",
  "SA07n918:23": "anyonyaṃ dṛṣṭibhirhatvā",
  "SA07n918:24": "śanaiśca viniśaśvasuḥ ||6 ||",
  "SA07n918:25": "evaṃ tā dṛṣṭimātreṇa",
  "SA07n918:26": "nāryo dadṛśureva tam |",
  "SA07n918:27": "na vyājahurna jahasuḥ",
  "SA07n918:28": "prabhāveṇāsya yantritāḥ ||7 ||",
  "SA07n918:29": "tāstathā nu nirārambhā",
  "SA07n918:30": "dṛṣṭvā praṇayaviklavāḥ |",
  "SA07n918:31": "purohitasuto dhīmā-",
  "SA07n918:32": "nudāyī vākyamabravīt ||8 ||",
  "SA07n918:33": "sarvāḥ sarvakalājñāḥ stha",
  "SA07n918:34": "bhāvagrahaṇapaṇḍitāḥ |",
  "SA07n918:35": "rupacāturyasaṃpannāḥ",
  "SA07n918:36": "svaguṇairmukhyatāṃ gatāḥ ||9 ||",
  "SA07n918:37": "śobhayeta guṇairebhi-",
  "SA07n918:38": "rapi tānuttarān kurūn |",
  "SA07n918:39": "kuberasyāpi cākrīḍaṃ",
  "SA07n918:40": "prāgeva vasudhāmimām ||10 ||",
  "SA07n918:41": "śaktāścaliyituṃ yūyaṃ",
  "SA07n918:42": "vitarāgānuṣīnapi |",
  "SA07n918:43": "apsarobhiśca kalitān",
  "SA07n918:44": "grahītuṃ vibudhānapi ||11 ||",
  "SA07n918:45": "bhāvajñānena hāvena",
  "SA07n918:46": "rūpacāturyasaṃpadā |",
  "SA07n918:47": "strīṇāmeva ca śaktāḥ stha",
  "SA07n918:48": "saṃrāge kiṃ punarnṛṇām ||12 ||",
  "SA07n918:49": "tāsāmevaṃvidhānāṃ vo",
  "SA07n918:50": "viyuktānāṃ svagocare |",
  "SA07n918:51": "iyamevaṃvidhā ceṣṭā",
  "SA07n918:52": "na tuṣṭo'smyārjavena vaḥ ||13 ||",
  "SA07n918:53": "idaṃ navavadhūnāṃ vo",
  "SA07n918:54": "hrīnīkuñcitacakṣuṣām |",
  "SA07n918:55": "sadṛśaṃ ceṣṭitaṃ hi syā-",
  "SA07n918:56": "dapi vā gopāyoṣitām ||14 ||",
  "SA07n918:57": "yadapi syādayaṃ dhīraḥ",
  "SA07n918:58": "śriprabhāvānmahāniti |",
  "SA07n918:59": "strīṇāmapi mahatteja",
  "SA07n918:60": "itaḥ kāryo'tra niścayaḥ ||15 ||",
  "SA07n918:61": "purā hi kāśisundaryā",
  "SA07n918:62": "veśavadhvā mahānṛṣiḥ |",
  "SA07n918:63": "tāḍito'bhūtpadā vyāso",
  "SA07n918:64": "durdharṣo devatairapi ||16 ||",
  "SA07n918:65": "manthālagautamo bhikṣu-",
  "SA07n918:66": "rjaṅghayā vāramukhyayā |",
  "SA07n918:67": "piprīṣuśca tadarthārthaṃ",
  "SA07n918:68": "vyasūnniraharatpurā ||17 ||",
  "SA07n918:69": "gautamaṃ dīrghatapasaṃ",
  "SA07n918:70": "maharṣi dīrghajīvinam |",
  "SA07n918:71": "yoṣitsaṃtoṣayāmāsa",
  "SA07n918:72": "varṇasthānāvarā satī ||18 ||",
  "SA07n918:73": "ṛṣyaśṛṅgaṃ munisutaṃ",
  "SA07n918:74": "tathaiva strīṣvapaṇḍitam |",
  "SA07n918:75": "upāyairvividhaiḥ śāntā",
  "SA07n918:76": "jagrāha ca jahāra ca ||19 ||",
  "SA07n918:77": "viśvāmitro maharṣiśca",
  "SA07n918:78": "vigāḍho'pi mahattapaḥ |",
  "SA07n918:79": "daśa varṣāṇyaharmene",
  "SA07n918:80": "ghṛtācyāpsarasā hṛtaḥ ||20 ||",
  "SA07n918:81": "evamādīnṛṣīstāṃstā-",
  "SA07n918:82": "nanayanvikriyāṃ striyaḥ |",
  "SA07n918:83": "lalitaṃ pūrvavayasaṃ",
  "SA07n918:84": "kiṃ punarnṛpateḥ sutam ||21 ||",
  "SA07n918:85": "tadevaṃ sati viśrabdhaṃ",
  "SA07n918:86": "prayatadhvaṃ tathā yathā |",
  "SA07n918:87": "iyaṃ nṛpasya vaṃśaśrī-",
  "SA07n918:88": "rito na syātparāṅmukhī ||22 ||",
  "SA07n918:89": "yā hi kāścidyuvatayo",
  "SA07n918:90": "haranti sadṛśaṃ janam |",
  "SA07n918:91": "nikṛṣṭotkṛṣṭayorbhāvaṃ",
  "SA07n918:92": "yā gṛhṇanti tu tāḥ striyaḥ ||23 ||",
  "SA07n918:93": "ityudāyivacaḥ śrutvā",
  "SA07n918:94": "tā viddhā iva yoṣitaḥ |",
  "SA07n918:95": "samāruruhurātmānaṃ",
  "SA07n918:96": "kumāragrahaṇaṃ prati ||24 ||",
  "SA07n918:97": "tā bhrūmiḥ prekṣitairhāvai-",
  "SA07n918:98": "rhasitailīḍitairgataiḥ |",
  "SA07n918:99": "cakrurākṣepikāśceṣṭā",
  "SA07n918:100": "bhītabhītā ivāṅganāḥ ||25 ||",
  "SA07n918:101": "rājñastu viniyogena",
  "SA07n918:102": "kumārasya ca mārdavāt |",
  "SA07n918:103": "jahuḥ kṣipramaviśrambhaṃ",
  "SA07n918:104": "madena madanena ca ||26 ||",
  "SA07n918:105": "atha nārījanavṛtaḥ",
  "SA07n918:106": "kumāro vyacaradvanam |",
  "SA07n918:107": "vāsitāyūthasahitaḥ",
  "SA07n918:108": "karīva himavadvanam ||27 ||",
  "SA07n918:109": "sa tasmin kānane ramye",
  "SA07n918:110": "jajvāla strīpuraḥsaraḥ |",
  "SA07n918:111": "ākrīḍa iva vibhrāje",
  "SA07n918:112": "vivasvānapsarovṛtaḥ ||28 ||",
  "SA07n918:113": "madenāvarjitā nāma",
  "SA07n918:114": "taṃ kāścittatra yiṣitaḥ |",
  "SA07n918:115": "kaṭhinaiḥ paspṛśuḥ pīnaiḥ",
  "SA07n918:116": "saṃhatairvalgubhiḥ stanaiḥ ||29 ||",
  "SA07n918:117": "srastāṃsakomalālamba-",
  "SA07n918:118": "mṛdubāhulatābalā |",
  "SA07n918:119": "anṛtaṃ skhalitaṃ kāci-",
  "SA07n918:120": "tkṛtvainaṃ sasvaje balāt ||30 ||",
  "SA07n918:121": "kācittāmrādharoṣṭhena",
  "SA07n918:122": "mukhenāsavagandhinā |",
  "SA07n918:123": "viniśaśvāsa karṇe'sya",
  "SA07n918:124": "rahasyaṃ śrūyatāmiti ||31 ||",
  "SA07n918:125": "kācidājñāpayantīva",
  "SA07n918:126": "provācārdrānulepanā |",
  "SA07n918:127": "iha bhaktiṃ kuruṣveti",
  "SA07n918:128": "hastasaṃśleṣalipsayā ||32 ||",
  "SA07n918:129": "muhurmuhurmadavyāja-",
  "SA07n918:130": "srastanīlāṃśukāparā |",
  "SA07n918:131": "ālakṣyaraśanā reje",
  "SA07n918:132": "sphuradvidyudiva kṣapā ||33 ||",
  "SA07n918:133": "kāścitkanakakāñcībhi-",
  "SA07n918:134": "rmukharābhiritastataḥ |",
  "SA07n918:135": "babhramurdarśayantyo'sya",
  "SA07n918:136": "śroṇīstanvaṃśukāvṛtāḥ ||34 ||",
  "SA07n918:137": "cūtaśākhāṃ kusumitāṃ",
  "SA07n918:138": "pragṛhyānyā lalambire |",
  "SA07n918:139": "suvarṇakalaśaprakhyā-",
  "SA07n918:140": "ndarśayantyaḥ payodharān ||35 ||",
  "SA07n918:141": "kācitpadmavanādetya",
  "SA07n918:142": "sapadmā padmalocanā |",
  "SA07n918:143": "padmavaktrasya pārśve'sya",
  "SA07n918:144": "padmaśrīriva tasthuṣī ||36 ||",
  "SA07n918:145": "madhuraṃ gītamanvarthaṃ",
  "SA07n918:146": "kācitsābhinayaṃ jagau |",
  "SA07n918:147": "taṃ svasthaṃ codayantīva",
  "SA07n918:148": "vañcito'sītyavekṣitaiḥ ||37 ||",
  "SA07n918:149": "śubhena vadanenānyā",
  "SA07n918:150": "bhrūkārmukavikarṣiṇā |",
  "SA07n918:151": "prāvṛtyānucakārāsya",
  "SA07n918:152": "ceṣṭitaṃ dhīralīlayā ||38 ||",
  "SA07n918:153": "pīnavalgustanī kāci-",
  "SA07n918:154": "ddhāsāghūrṇitakuṇḍalā |",
  "SA07n918:155": "uccairavajahāsainaṃ",
  "SA07n918:156": "samāpnotu bhavāniti ||39 ||",
  "SA07n918:157": "apayāntaṃ tathaivānyā",
  "SA07n918:158": "babandhurmālyadāmabhiḥ |",
  "SA07n918:159": "kāścitsākṣepamadhurai-",
  "SA07n918:160": "rjagṛharvacanāṅkuśaiḥ ||40 ||",
  "SA07n918:161": "pratiyogārthinī kācid",
  "SA07n918:162": "gṛhītvā cūtavallarīm |",
  "SA07n918:163": "idaṃ puṣpaṃ tu kasyeti |",
  "SA07n918:164": "papraccha madaviklavā ||41 ||",
  "SA07n918:165": "kācitpuruṣavatkṛtvā",
  "SA07n918:166": "gatiṃ saṃsthānameva ca |",
  "SA07n918:167": "uvācainaṃ jitaḥ strībhī-",
  "SA07n918:168": "rjaya bho pṛthivīmimām ||42 ||",
  "SA07n918:169": "atha lolekṣaṇā kāci-",
  "SA07n918:170": "jjighrantī nīlamutpalam |",
  "SA07n918:171": "kiṃcinmadakalairvākyai",
  "SA07n918:172": "rnṛpātmajamabhāṣata ||43 ||",
  "SA07n918:173": "paśya bhartīścitaṃ cūtaṃ",
  "SA07n918:174": "kusumairmadhugandhibhiḥ |",
  "SA07n918:175": "hemapañjararuddho vā",
  "SA07n918:176": "kokilo yatra kūjati ||44 ||",
  "SA07n918:177": "aśoko dṛśyatāmeṣa",
  "SA07n918:178": "kāmiśokavivardhanaḥ |",
  "SA07n918:179": "ruvanti bhramarā yatra",
  "SA07n918:180": "dahyamānā ivāgninā ||45 ||",
  "SA07n918:181": "cūtayaṣṭyā samāśliṣṭo",
  "SA07n918:182": "dṛśyatāṃ tilakadrumaḥ |",
  "SA07n918:183": "śuklavāsā iva naraḥ",
  "SA07n918:184": "striyā pītāṅgarāgayā ||46 ||",
  "SA07n918:185": "phullaṃ kurubakaṃ paśya",
  "SA07n918:186": "nirbhuktālaktakaprabham |",
  "SA07n918:187": "yo nakhaprabhayā strīṇāṃ",
  "SA07n918:188": "nirbhīrtsata ivānataḥ ||47 ||",
  "SA07n918:189": "bālāśokaśca nicito",
  "SA07n918:190": "dṛśyatāmeṣa pallavaiḥ |",
  "SA07n918:191": "yo'smākaṃ hastaśobhābhi-",
  "SA07n918:192": "rlajjamāna iva sthitaḥ ||48 ||",
  "SA07n918:193": "dīrghikā prāvṛtāṃ paśya",
  "SA07n918:194": "tīrajaiḥ sinduvārakaiḥ |",
  "SA07n918:195": "pāṇḍurāṃśukasaṃvītāṃ",
  "SA07n918:196": "śayānāṃ pramadāmiva ||49 ||",
  "SA07n918:197": "dṛśyatāṃ strīṣu māhātmyaṃ",
  "SA07n918:198": "cakravāko hyasau jale |",
  "SA07n918:199": "pṛṣṭhataḥ preṣyavadbhāryā-",
  "SA07n918:200": "manuvartyanugacchati ||50 ||",
  "SA07n918:201": "mattasya parapuṣṭasya",
  "SA07n918:202": "ruvataḥ śrūyatāṃ dhvaniḥ |",
  "SA07n918:203": "aparaḥ kokilo'nvakṣaṃ",
  "SA07n918:204": "pratiśrutkeva kūjati ||51 ||",
  "SA07n918:205": "api nāma vihaṅgānāṃ",
  "SA07n918:206": "vasantenāhṛto madaḥ |",
  "SA07n918:207": "na tu cintayato'cintyaṃ",
  "SA07n918:208": "janasya prājñamāninaḥ ||52 ||",
  "SA07n918:209": "ityevaṃ tā yuvatayo",
  "SA07n918:210": "manmathoddāmacetasaḥ |",
  "SA07n918:211": "kumāraṃ vividhaistaistai-",
  "SA07n918:212": "rupacakramire nayaiḥ ||53 ||",
  "SA07n918:213": "evamākṣipyamāṇo'pi |",
  "SA07n918:214": "satu dhairyāvṛtendriyaḥ |",
  "SA07n918:215": "martavyamiti sodvego",
  "SA07n918:216": "na jaharṣa na vivyathe ||54 ||",
  "SA07n918:217": "tāsāṃ tattve'navasthānaṃ",
  "SA07n918:218": "dṛṣṭvā sa puruṣottamaḥ |",
  "SA07n918:219": "samaṃ vignena dhīreṇa",
  "SA07n918:220": "cintayāmāsa cetasā ||55 ||",
  "SA07n918:221": "kiṃ tvimā nāvagacchanti",
  "SA07n918:222": "capalaṃ yauvanaṃ striyaḥ |",
  "SA07n918:223": "yato rūpeṇa saṃmattaṃ",
  "SA07n918:224": "jarā yannāśayiṣyati ||56 ||",
  "SA07n918:225": "nūnametā na paśyanti",
  "SA07n918:226": "kasyacidrogasaṃplavam |",
  "SA07n918:227": "tathā hṛṣṭā bhayaṃ tyaktvā",
  "SA07n918:228": "jagati vyadhidharmiṇi ||57 ||",
  "SA07n918:229": "anabhijñāśca suvyaktaṃ",
  "SA07n918:230": "mṛtyoḥ sarvāpahāriṇaḥ |",
  "SA07n918:231": "tataḥ svasthā nirudvignāḥ",
  "SA07n918:232": "krīḍanti ca hasanti ca ||58 ||",
  "SA07n918:233": "jarāṃ vyādhiṃ ca mṛtyuṃ ca",
  "SA07n918:234": "ko hi jānansacetanaḥ |",
  "SA07n918:235": "svasthastiṣṭhenniṣīdedvā",
  "SA07n918:236": "śayedvā kiṃ punarhaset ||59 ||",
  "SA07n918:237": "yastu dṛṣṭvā paraṃ jīrṇa",
  "SA07n918:238": "vyādhitaṃ mṛtameva ca |",
  "SA07n918:239": "svastho bhavati nodvigno",
  "SA07n918:240": "yathācetāstathaiva saḥ ||60 ||",
  "SA07n918:241": "viyujyamāne hi tarau",
  "SA07n918:242": "puṣpairapi phalairapi |",
  "SA07n918:243": "patati cchidyamāne vā",
  "SA07n918:244": "taruranyo na śocate ||61 ||",
  "SA07n918:245": "iti dhyānaparaṃ dṛṣṭvā",
  "SA07n918:246": "viṣayebhyo gataspṛham |",
  "SA07n918:247": "udāyī nītiśāstrajña-",
  "SA07n918:248": "stamuvāca suhṛttayā ||62 ||",
  "SA07n918:249": "ahaṃ nṛpatinā dattaḥ",
  "SA07n918:250": "sakhā tubhyaṃ kṣamaḥ kila |",
  "SA07n918:251": "yāsmāttvayi vivakṣā me",
  "SA07n918:252": "tayā praṇayavattayā ||63 ||",
  "SA07n918:253": "ahitātpratiṣedhaśca",
  "SA07n918:254": "hite cānupravartanam |",
  "SA07n918:255": "vyasane cāparityāga-",
  "SA07n918:256": "strividhaṃ mitralakṣaṇam ||64 ||",
  "SA07n918:257": "so'haṃ maitrīṃ pratijñāya",
  "SA07n918:258": "puruṣārthātparāṅmukhaḥ |",
  "SA07n918:259": "yadi tvā samupekṣeya",
  "SA07n918:260": "na bhavenmitratā mayi ||65 ||",
  "SA07n918:261": "tadbravīmi suhṛdbhūtvā",
  "SA07n918:262": "taruṇasya vapuṣmataḥ |",
  "SA07n918:263": "idaṃ na pratirūpaṃ te",
  "SA07n918:264": "strīṣvadākṣiṇyamīdṛśam ||66 ||",
  "SA07n918:265": "anṛtenāpi nārīṇāṃ",
  "SA07n918:266": "yuktaṃ samanuvartanam |",
  "SA07n918:267": "tadvrīḍāparihārārtha-",
  "SA07n918:268": "mātmaratyarthameva ca ||67 ||",
  "SA07n918:269": "saṃnatiścānuvṛttiśca",
  "SA07n918:270": "strīṇāṃ hṛdayabandhanam |",
  "SA07n918:271": "snehasya hi guṇā yoni-",
  "SA07n918:272": "rmānakāmāśca yoṣitaḥ ||68 ||",
  "SA07n918:273": "tadarhasi viśālākṣa",
  "SA07n918:274": "hṛdaye'pi parāṅmukhe |",
  "SA07n918:275": "rūpasyāsyānurūpeṇa",
  "SA07n918:276": "dākṣiṇyenānuvartitum ||69 ||",
  "SA07n918:277": "dākṣiṇyamauṣadhaṃ strīṇāṃ",
  "SA07n918:278": "dākṣiṇyaṃ bhūṣaṇaṃ param |",
  "SA07n918:279": "dākṣiṇyarahitaṃ rūpaṃ",
  "SA07n918:280": "niṣpuṣpamiva kānanam ||70 ||",
  "SA07n918:281": "kiṃ vā dākṣiṇyamātreṇa",
  "SA07n918:282": "bhāvenāstu parigrahaḥ |",
  "SA07n918:283": "viṣayāndurlabhāllabdhvā",
  "SA07n918:284": "na hyavajñātumarhasi ||71 ||",
  "SA07n918:285": "kāmaṃ paramiti jñātvā",
  "SA07n918:286": "devo'pi hi puraṃdaraḥ |",
  "SA07n918:287": "gautamasya muneḥ patnī-",
  "SA07n918:288": "mahalyāṃ cakame purā ||72 ||",
  "SA07n918:289": "agastyaḥ prārthayāmāsa",
  "SA07n918:290": "somabhāryā ca rohiṇīm |",
  "SA07n918:291": "tasmāttatsadṛśī lebhe",
  "SA07n918:292": "lopāmudrāmiti śrutiḥ ||73 ||",
  "SA07n918:293": "utathyasya ca bhāryāyāṃ",
  "SA07n918:294": "mamātāyaṃ mahātapaḥ |",
  "SA07n918:295": "mārutyāṃ janayāmāsa",
  "SA07n918:296": "bharadvājaṃ bṛhaspatiḥ ||74 ||",
  "SA07n918:297": "bṛhaspatermahiṣyāṃ ca",
  "SA07n918:298": "juvhatyāṃ juvhatāṃ varaḥ |",
  "SA07n918:299": "budhaṃ vibudhakarmāṇaṃ",
  "SA07n918:300": "janayāmāsa candramāḥ ||75 ||",
  "SA07n918:301": "kālīṃ caiva purā kanyāṃ",
  "SA07n918:302": "jalaprabhavasaṃbhavām |",
  "SA07n918:303": "jagāma yamunātīre",
  "SA07n918:304": "jātarāgaḥ parāśaraḥ ||76 ||",
  "SA07n918:305": "mātaṅgayāmakṣamālāyāṃ",
  "SA07n918:306": "garhitāyāṃ riraṃsayā |",
  "SA07n918:307": "kapiñjalādaṃ tanayaṃ",
  "SA07n918:308": "vasiṣṭho'janayanmuniḥ ||77 ||",
  "SA07n918:309": "yayātiścaiva rājarṣi-",
  "SA07n918:310": "rvayasyapi vinirgate |",
  "SA07n918:311": "viśvācyāpsarasā sārdhaṃ",
  "SA07n918:312": "reme caitrarathe vane ||78 ||",
  "SA07n918:313": "strīsaṃsarga vināśāntaṃ",
  "SA07n918:314": "pāṇḍurjñātvāpi kauravaḥ |",
  "SA07n918:315": "mādrīrūpaguṇākṣiptaḥ",
  "SA07n918:316": "siṣeve kāmajaṃ sukham ||79 ||",
  "SA07n918:317": "karālajanakaścaiva",
  "SA07n918:318": "hṛtvā brāhmaṇakanyakām |",
  "SA07n918:319": "avāpa bhraṃśamapyevaṃ",
  "SA07n918:320": "na tu seje na manmatham ||80 ||",
  "SA07n918:321": "evamādyā mahātmāno",
  "SA07n918:322": "viṣayān garhitānapi |",
  "SA07n918:323": "ratihetorbubhujire",
  "SA07n918:324": "prāgeva guṇasaṃhitān ||81 ||",
  "SA07n918:325": "tvaṃ punarnyāyataḥ prāptān",
  "SA07n918:326": "balavān rūpavānyuvā |",
  "SA07n918:327": "viṣayānavajānāsi",
  "SA07n918:328": "yatra saktamidaṃ jagat ||82 ||",
  "SA07n918:329": "iti śrutvā vacastasya",
  "SA07n918:330": "ślakṣṇamāgamasaṃhitam |",
  "SA07n918:331": "meghastanitanirghoṣaḥ",
  "SA07n918:332": "kumāraḥ pratyabhāṣata ||83 ||",
  "SA07n918:333": "upapannamidaṃ vākyaṃ",
  "SA07n918:334": "sauhārdavyañjakaṃ tvayi |",
  "SA07n918:335": "atra ca tvānuneṣyāmi",
  "SA07n918:336": "yatra mā duṣṭhu manyase ||84 ||",
  "SA07n918:337": "nāvajānāmi viṣayān",
  "SA07n918:338": "jāne lokaṃ tadātmakam |",
  "SA07n918:339": "anityaṃ tu jagamatvā",
  "SA07n918:340": "nātra me ramate manaḥ ||85 ||",
  "SA07n918:341": "jarā vyādhiśca mṛtyuśca",
  "SA07n918:342": "yadi na syādidaṃ trayam |",
  "SA07n918:343": "mamāpi hi manojñeṣu",
  "SA07n918:344": "viṣayeṣu ratirbhavet ||86 ||",
  "SA07n918:345": "nityaṃ yadapi hi strīṇā-",
  "SA07n918:346": "metadeva vapurbhavet |",
  "SA07n918:347": "doṣavatsvapi kāmeṣu",
  "SA07n918:348": "kāmaṃ rajyeta me manaḥ ||87 ||",
  "SA07n918:349": "yadā tu jarayāpītaṃ",
  "SA07n918:350": "rūpamāsāṃ bhaviṣyati |",
  "SA07n918:351": "ātmano'pyanabhipretaṃ",
  "SA07n918:352": "mohāttatra ratirbhavet ||88 ||",
  "SA07n918:353": "mṛtyuvyādhijarādharmā",
  "SA07n918:354": "mṛtyuvyādhijarātmabhiḥ |",
  "SA07n918:355": "ramamāṇo hyasaṃvignaḥ",
  "SA07n918:356": "samāno mṛgapakṣibhiḥ ||89 ||",
  "SA07n918:357": "yadapyāttha mahātmāna-",
  "SA07n918:358": "ste'pi kāmātmakā iti |",
  "SA07n918:359": "saṃvego'traiva kartavyo",
  "SA07n918:360": "yadā teṣāmapi kṣayaḥ ||90 ||",
  "SA07n918:361": "māhātmyaṃ na ca tanmanye",
  "SA07n918:362": "yatra sāmānyataḥ kṣayaḥ |",
  "SA07n918:363": "viṣayeṣu prasaktirvā",
  "SA07n918:364": "yuktirvā nātmavattayā ||91 ||",
  "SA07n918:365": "yadapyātthānṛtenāpi",
  "SA07n918:366": "strījane vartyatāmiti |",
  "SA07n918:367": "anṛtaṃ nāvagacchāmi |",
  "SA07n918:368": "dākṣiṇyenāpi kiṃcana ||92 ||",
  "SA07n918:369": "na cānuvartanaṃ tanme",
  "SA07n918:370": "rucitaṃ yatra nārjavam |",
  "SA07n918:371": "sarvabhāvena saṃparko",
  "SA07n918:372": "yadi nāsti dhigastu tat ||93 ||",
  "SA07n918:373": "adhṛteḥ śraddadhānasya",
  "SA07n918:374": "saktasyādoṣadarśinaḥ |",
  "SA07n918:375": "kiṃ hi vañcayitavyaṃ syā-",
  "SA07n918:376": "jjātarāgasya cetasaḥ ||94 ||",
  "SA07n918:377": "vañcayanti ca yadyevaṃ",
  "SA07n918:378": "jātarāgāḥ parasparam |",
  "SA07n918:379": "nanu naiva kṣamaṃ draṣṭuṃ",
  "SA07n918:380": "narāḥ strīṇāṃ nṛṇāṃ striyaḥ ||95 ||",
  "SA07n918:381": "tadevaṃ sati duḥkhārta",
  "SA07n918:382": "jarāmaraṇabhāginam |",
  "SA07n918:383": "na māṃ kāmeṣvanāryeṣu",
  "SA07n918:384": "pratārayitumarhasi ||96 ||",
  "SA07n918:385": "aho'tidhīraṃ balavacca te mana-",
  "SA07n918:386": "ścaleṣu kāmeṣu ca sāradarśinaḥ |",
  "SA07n918:387": "bhaye'titīvre viṣayeṣu sajjase",
  "SA07n918:388": "nirīkṣamāṇo maraṇādhvani prajāḥ ||97 ||",
  "SA07n918:389": "ahaṃ punarbhīruratīvaviklavo",
  "SA07n918:390": "jarāvipadvyādhibhayaṃ vicintayan |",
  "SA07n918:391": "labhe na śāntiṃ na dhṛtiṃ kuto ratiṃ",
  "SA07n918:392": "niśāmayandīptamivāgninā jagat ||98 ||",
  "SA07n918:393": "asaṃśayaṃ mṛtyuriti prajānato",
  "SA07n918:394": "narasya rāgo hṛdi yasya jāyate |",
  "SA07n918:395": "ayomayīṃ tasya paraimi cetanāṃ",
  "SA07n918:396": "mahābhaye rajyati yo na roditi ||99 ||",
  "SA07n918:397": "atho kumāraśca viniścayātmikāṃ",
  "SA07n918:398": "cakāra kāmāśrayaghātinīṃ kathām |",
  "SA07n918:399": "janasya cakṣurgamanīyamaṇḍalo",
  "SA07n918:400": "mahīdharaṃ cāstamiyāya bhāskaraḥ ||100 ||",
  "SA07n918:401": "tato vṛthādhāritabhūṣaṇasrajaḥ",
  "SA07n918:402": "kalāguṇaiśca praṇayaiśca niṣphalaiḥ |",
  "SA07n918:403": "sva eva bhāve vinigṛhya manmathaṃ",
  "SA07n918:404": "puraṃ yayurbhagnamanorathāḥ striyaḥ ||101 ||",
  "SA07n918:405": "tataḥ purodyānagatāṃ janaśriyaṃ",
  "SA07n918:406": "nirīkṣya sāyaṃ pratisaṃhṛtāṃ punaḥ |",
  "SA07n918:407": "anityatāṃ sarvagatāṃ vicintaya-",
  "SA07n918:408": "nviveśa dhiṣṇayaṃ kṣitipālakātmajaḥ ||102 ||",
  "SA07n918:409": "tataḥ śrutvā rājā",
  "SA07n918:410": "viṣayavimukhaṃ tasya tu mano",
  "SA07n918:411": "na śiśye tāṃ rātriṃ",
  "SA07n918:412": "hṛdayagataśalyo gaja iva |",
  "SA07n918:413": "atha śrānto mantre",
  "SA07n918:414": "bahuvividhamārge sasacivo",
  "SA07n918:415": "na so'nyatkāmebhyo",
  "SA07n918:416": "niyamanamapaśyatsutamateḥ ||103 ||",
  "SA07n918:417": "iti buddhacarite mahākāvye strīvighātano",
  "SA07n918:418": "nāma caturthaḥ sargaḥ ||4 ||"
}