{
  "SA01n773:0": "dvitīyo binduḥ",
  "SA01n773:1": "lokadhātavo gatayaśca",
  "SA01n773:2": "1 | trayo dhātavaḥ |",
  "SA01n773:3": "kāmadhātuḥ rūpadhātuḥ arūpadhātuḥ ||",
  "SA01n773:4": "triṣu dhātuṣu santi paṃcavidhā gatayaḥ |",
  "SA01n773:5": "narakagatiḥ tiryaggatiḥ pretagatiḥ manuṣyagatiḥ devagatiḥ ||",
  "SA01n773:6": "antarābhavagatiścāpi ||",
  "SA01n773:7": "2 | katame narakāḥ |",
  "SA01n773:8": "mahānarakā aṣṭavidhāḥ |",
  "SA01n773:9": "prathamaḥ saṃjīvaḥ |",
  "SA01n773:10": "dvitīyaḥ kālasūtraṃ |",
  "SA01n773:11": "tṛtīyaḥ saṃghātaḥ |",
  "SA01n773:12": "caturtho rauravaḥ |",
  "SA01n773:13": "paṃcamo mahārauravaḥ |",
  "SA01n773:14": "ṣaṣṭhastapanaḥ |",
  "SA01n773:15": "saptamaḥ pratāpanaḥ |",
  "SA01n773:16": "aṣṭamo'vīciḥ ||",
  "SA01n773:17": "pratimahānarakaṃ bhavaṃti ṣoḍaśabhūmayaḥ |",
  "SA01n773:18": "te hyupanarakāḥ ||",
  "SA01n773:19": "katame tiryaṃcaḥ |",
  "SA01n773:20": "apadāḥ dvipadāḥ catuṣpadāḥ bahupadāḥ jalacarāḥ sthalacarāḥ khecarāḥ ||",
  "SA01n773:21": "katamā pretagatiḥ |",
  "SA01n773:22": "vividhakāyā ||",
  "SA01n773:23": "kāmadhātāvakuśalagatistridhā |",
  "SA01n773:24": "ghorā madhyamā adhamā |",
  "SA01n773:25": "ghoravipākā narakāḥ madhyamavipākāstiryaṃcaḥ adhamavipākāḥ pretāḥ ||",
  "SA01n773:26": "3 | katamā manuṣyagatiḥ |",
  "SA01n773:27": "caturvidhā manuṣyāḥ |",
  "SA01n773:28": "pūrvavidehamanuṣyāḥ |",
  "SA01n773:29": "aparagodānīyamanuṣyāḥ |",
  "SA01n773:30": "jaṃbūdvīpamanuṣyāḥ |",
  "SA01n773:31": "uttarakurumanuṣyāḥ |",
  "SA01n773:32": "iti kāmadhātau caturvidhā kuśalakarmavipākopapattiḥ ||",
  "SA01n773:33": "katamā devagatiḥ |",
  "SA01n773:34": "kāmadhātau ṣoḍhā |",
  "SA01n773:35": "cāturmahārājikadevā ityekā |",
  "SA01n773:36": "trayastriṃśaddevā iti dvitīyā |",
  "SA01n773:37": "yāmadevā iti tṛtīyā |",
  "SA01n773:38": "tuṣitadevā iti caturthī |",
  "SA01n773:39": "nirmāṇaratidevā iti paṃcamī |",
  "SA01n773:40": "paranirmitavaśavartidevā iti ṣaṣṭhī |",
  "SA01n773:41": "iti kāmadhātau poḍhā kuśalakarmavipākopapattiḥ ||",
  "SA01n773:42": "4 | rūpadhātau saptadaśabhūmayaḥ |",
  "SA01n773:43": "brahmakāyika-brahmapurohita-mahābrahmāṇaḥ |",
  "SA01n773:44": "parittābhā'",
  "SA01n773:45": "pramāṇābhā''bhāsvarāḥ |",
  "SA01n773:46": "parittaśubhā'",
  "SA01n773:47": "pramāṇaśubha-śubhakṛtsnāḥ |",
  "SA01n773:48": "anabhrakapuṇyaprasava-vṛhatphalā'",
  "SA01n773:49": "vṛhā'",
  "SA01n773:50": "tapasudṛśa-sudarśanā'kaniṣṭhāḥ ||",
  "SA01n773:51": "catvāri dhyānāni trividhānyuttamamadhyamahīnaphalavipākāni ||",
  "SA01n773:52": "dvādaśāyatanotpādaḥ ||",
  "SA01n773:53": "catvāri dhyānāni sāsravānāsravamiśravipākāni ||",
  "SA01n773:54": "paṃcaśuddhādhivāsāryapudgalopapattistryāyatanā ||",
  "SA01n773:55": "āryapudgalapṛthagjanānāṃ bṛhatphale sahotpādaḥ ||",
  "SA01n773:56": "pṛthagjanānāmāsaṃjñikasamādhilābhenāsaṃjñikadevalokopapattiḥ ||",
  "SA01n773:57": "5 | arūpadhātāvākāśānantyāyatanaṃ vijñānānantyāyatanamākiṃcanyāyatanaṃ naiva saṃjñānāsaṃjñāyatanaṃ (ceti cattvāri bhavantyāyatanāni) |",
  "SA01n773:58": "yathākramamarūpasamādhilābhādarūpāyataneṣūpapattiḥ |",
  "SA01n773:59": "yathāsamādhibalaṃ janmāyatanalābhaḥ |",
  "SA01n773:60": "iti devagatiḥ ||",
  "SA01n773:61": "6 | kāmānāṃ bhavatyādānamupabhogaḥ saṃgraha itihetorucyate kāmadhātuḥ |",
  "SA01n773:62": "kāmābhāvādra pabhāvāccocyate rūpadhātuḥ |",
  "SA01n773:63": "arūpadhātuścatuḥskandha iti (rūpābhāvād)",
  "SA01n773:64": "ucyate'rūpadhātuḥ ||",
  "SA01n773:65": "7 | paṃcāśanmānupavarṣāṇi cāturmahārājikadevānāmahorātraṃ bhavati |",
  "SA01n773:66": "evaṃ triṃśaddinānyeko māso dvādaśamāsā ekaṃ varṣaṃ |",
  "SA01n773:67": "divyāni paṃcavarṣaśatāni cāturmahārājikadevānāmāyuḥ |",
  "SA01n773:68": "tadetadgaṇanayā mānupāṇi navativarṣaśatasahasrāṇi ||",
  "SA01n773:69": "etatsaṃjīvanarakasyāhorātraṃ |",
  "SA01n773:70": "evaṃ triṃśaddinānyeko māso dvādaśamāsā ekaṃ varṣaṃ |",
  "SA01n773:71": "paṃcavarṣaśatāni saṃjīvanarakasyāyuḥ ||",
  "SA01n773:72": "8 | punaḥ khalu mānupavarpaśataṃ trayastriṃśaddevānāmahorātraṃ |",
  "SA01n773:73": "evaṃ triṃśaddinānyeko māso dvādaśamāsā ekaṃ varṣaṃ |",
  "SA01n773:74": "divyaṃ varṣasahasraṃ trayastriṃśaddevānāmāyuḥ |",
  "SA01n773:75": "tadetadgaṇanayā mānuṣāṇāṃ tisro varṣakoṭayaḥ ṣaṣṭivarṣaśatasahasrāṇi ||",
  "SA01n773:76": "etatkālasūtranarakasyāhorātraṃ |",
  "SA01n773:77": "evaṃ triṃśaddinānyeko māsaḥ |",
  "SA01n773:78": "dvādaśamāsā ekaṃ varṣaṃ |",
  "SA01n773:79": "varṣāṇāṃ sahasraṃ kālasūtranarakasyāyuḥ ||",
  "SA01n773:80": "9 | punaḥ khalu dva mānuṣavarṣaśate yāmadevānāmahorātraṃ |",
  "SA01n773:81": "evaṃ triṃśad dinānyeko māsaḥ |",
  "SA01n773:82": "dvādaśamāsā ekaṃ varṣaṃ |",
  "SA01n773:83": "dve divyavarṣasahasre yāmadevānāmāyuḥ |",
  "SA01n773:84": "tadetad gaṇanayā mānuṣāṇāṃ caturdaśavarṣakoṭayaścatvāriṃśadvarṣaśatasahasrāṇi ||",
  "SA01n773:85": "etatsaṃghātanarakasyāhorātraṃ |",
  "SA01n773:86": "evaṃ triṃśad dinānyeko māsaḥ |",
  "SA01n773:87": "dvādaśamāsā ekaṃ varṣaṃ |",
  "SA01n773:88": "dve varṣasahasre saṃghātanarakasyāyuḥ ||",
  "SA01n773:89": "10 | punaḥ khalu catvāri mānuṣavarṣaśatāni tuṣitadevānāmahorātraṃ |",
  "SA01n773:90": "evaṃ triṃśad dinānyeko māsaḥ |",
  "SA01n773:91": "dvādaśamāsā ekaṃ varṣaṃ |",
  "SA01n773:92": "catvāri divyavarṣasahasrāṇi tuṣitadevānāmāyuḥ |",
  "SA01n773:93": "tadetad gaṇanayā mānuṣāṇāṃ saptapaṃcāśad varṣakoṭayaḥ ṣaṣṭivarṣasahasrāṇi ||",
  "SA01n773:94": "etad rauravanarakasyāhorātram |",
  "SA01n773:95": "evaṃ triṃśad dinānyeko māsaḥ |",
  "SA01n773:96": "dvādaśamāsā ekaṃ varṣaṃ |",
  "SA01n773:97": "catvāri varṣasahasrāṇi rauravanarakasyāyuḥ ||",
  "SA01n773:98": "11 | punaḥ khalvaṣṭau mānupavarṣaśatāni nirmāṇaratidevānāmahorātraṃ |",
  "SA01n773:99": "evaṃ triṃśad dinānyeko māsaḥ |",
  "SA01n773:100": "dvādaśamāsā ekaṃ varṣaṃ |",
  "SA01n773:101": "aṣṭau divyavarṣasahasrāṇi nirmāṇaratidevānāmāyuḥ |",
  "SA01n773:102": "tadetad gaṇanayā mānuṣāṇāṃ triṃśadadhikadve varṣakoṭiśate catvāriṃśad varṣaśatasahasrāṇi ||",
  "SA01n773:103": "etad mahārauravanarakasyāhorātraṃ |",
  "SA01n773:104": "evaṃ triṃśad dinānyeko māsaḥ |",
  "SA01n773:105": "dvādaśamāsā ekaṃ varṣaṃ |",
  "SA01n773:106": "aṣṭau varṣasahasrāṇi mahārauravanarakasyāyuḥ ||",
  "SA01n773:107": "12 | punaḥ khalu mānuṣāṇāṃ varṣasahasraṃ ṣaṭ ca varṣaśatāni paranirmitavaśavartidevānāmahorātraṃ |",
  "SA01n773:108": "evaṃ triṃśad dinānyeko māsaḥ |",
  "SA01n773:109": "dvādaśamāsā ekaṃ varṣaṃ |",
  "SA01n773:110": "ṣoḍaśadivyavarṣasahasrāṇi paranirmitavaśavartidevānāmāyuḥ |",
  "SA01n773:111": "tadetad gaṇanayā ekaviṃśatyadhikanavavarṣakoṭiśatāni ṣaṣṭi ca varṣaśatasahrāṇi ||",
  "SA01n773:112": "etat tapananarakasyāhorātraṃ |",
  "SA01n773:113": "evaṃ triṃśad dinānyeko māsaḥ |",
  "SA01n773:114": "dvādaśamāsā ekaṃ varṣaṃ |",
  "SA01n773:115": "ṣoḍaśa varṣasahasrāṇi tapananarakasyāyuḥ ||",
  "SA01n773:116": "13 | pratāpananarakasyāyuḥ kalpārdhaṃ |",
  "SA01n773:117": "avīci narakasyāyuḥ pūrṇaḥ kalpaḥ ||",
  "SA01n773:118": "tiraścāmāyurnimeṣamārabhya dinārghaṃ dinaṃ māso varṣaṃ daśa varṣāṇi varṣāṇāṃ śataṃ sahasraṃ śatasahasraṃ koṭiryāvat kalpaḥ ||",
  "SA01n773:119": "durgatānāṃ pretānāmāyu ryāvat saptativarṣasahasrāṇi ||",
  "SA01n773:120": "14 | jaṃbūdvīpe manuṣyāṇāmāyuḥ (kalpādau)",
  "SA01n773:121": "asaṃkhyeyavarṣāṇi vā (kalpānte)",
  "SA01n773:122": "daśa varṣāṇi vā |",
  "SA01n773:123": "adyatve punarāyurvarṣaśataṃ prāyaśaḥ |",
  "SA01n773:124": "aparagodānīyajanānāmāyuḥ sārddhadve varṣaśate |",
  "SA01n773:125": "pūrvavidehajanānāmāyuḥ paṃcavarṣaśatāni |",
  "SA01n773:126": "uttarakurujanānāmāyuranyūnānatiriktaṃ varṣasahasraṃ |",
  "SA01n773:127": "anyatra sattvānāmāyuṣo vṛddhihrāsau |",
  "SA01n773:128": "iti kāmadhātusattvānāmāyuḥ ||",
  "SA01n773:129": "15 | katamadra padhātāvāyuḥ |",
  "SA01n773:130": "brahmakāyikānāṃ devānāmardhakalpaḥ |",
  "SA01n773:131": "brahmapurohitānāṃ devānāṃ kalpaḥ |",
  "SA01n773:132": "mahābrahmaṇāṃ devānāṃ sārdhakalpaḥ |",
  "SA01n773:133": "iti prathamadhyāna (bhūmiṣu)āyuḥ ||",
  "SA01n773:134": "parittābhānāṃ devānāmāyu rdvau kalpau |",
  "SA01n773:135": "apramāṇābhānāṃ devānāmāyuścatvāraḥ kalpāḥ |",
  "SA01n773:136": "ābhāsvarāṇāṃ devānāmāyuraṣṭau kalpāḥ |",
  "SA01n773:137": "iti dvitīyadhyāna (bhūmiṣu)āyuḥ ||",
  "SA01n773:138": "parittaśubhānāṃ devānāmāyuḥ ṣoḍaśakalpāḥ |",
  "SA01n773:139": "apramāṇaśubhānāṃ devānāmāyurdvātriṃśatkalpāḥ |",
  "SA01n773:140": "śubhakṛtsnānāmāyuścatuḥṣaṣṭikalpāḥ |",
  "SA01n773:141": "iti tṛtīyadhyāna(bhūmiṣu)āyuḥ ||",
  "SA01n773:142": "anabhrakāṇāṃ devānāmāyuḥ kalpasapādaśataṃ |",
  "SA01n773:143": "puṇyaprasavānāṃ devānāmāyuḥ sārdhadve kalpaśate |",
  "SA01n773:144": "vṛhatphalānāṃ devānāmāyuḥ paṃca kalpaśatāni |",
  "SA01n773:145": "avṛhāṇāṃ devānāmāyuḥ kalpasahasraṃ |",
  "SA01n773:146": "atapānāṃ devānāmāyuḥ dve kalpasahasre |",
  "SA01n773:147": "sudṛśānāṃ devānāmāyuścatvāri kalpasahasrāṇi |",
  "SA01n773:148": "sudarśanānāṃ devānāmāyuraṣṭau kalpasahasrāṇi |",
  "SA01n773:149": "akaniṣṭhānāṃ devānāmāyuḥ ṣoḍaśa kalpasahasrāṇi |",
  "SA01n773:150": "iti (rūpadhātau)",
  "SA01n773:151": "caturdhyāna(bhūmīnāṃ)āyuḥ ||",
  "SA01n773:152": "16 | ākāśānantyāyatana āyu rviṃśatiḥ kalpasahasrāṇi |",
  "SA01n773:153": "vijñānānantyāyatana āyuścatvāriṃśat kalpasahasrāṇi |",
  "SA01n773:154": "ākiṃcanyāyatana āyuḥ ṣaṣṭiḥ kalpa sahasrāṇi |",
  "SA01n773:155": "naivasaṃjñānāsaṃjñāyatana āyuraśītiḥ kalpasahasrāṇi |",
  "SA01n773:156": "ityarūpadhātāvāyuḥ ||",
  "SA01n773:157": "evam (idaṃ)tridhātusattvānāmāyuḥ ||",
  "SA01n773:158": "[ityabhidharmāmṛtaśāstre lokadhātugatinirdeśo nāma dvitīyo binduḥ ||]"
}