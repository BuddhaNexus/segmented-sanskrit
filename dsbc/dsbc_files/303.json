{
    "303:0": "7 dūraṃgamā nāma saptamī bhūmiḥ |",
    "303:1": "upakramagāthāḥ |",
    "303:2": "atha vividharucirameghān marudgaṇo'bhikiriṣu vegaprāptāḥ |",
    "303:3": "pravyāharanti madhurā girivara śubha prītisaṃpūrṇāḥ || 1 ||",
    "303:4": "sādhu varatīkṣṇacittā guṇaśatasamupetajñānavaśavartim |",
    "303:5": "varacaraṇaṃ parituṣṭaṃ jagahitavarapuṇḍarīkāṇām || 2 ||",
    "303:6": "tada pravaramatulamābhā maheśvarāḥ khegatā naravarasya |",
    "303:7": "vararuciragandhameghānabhikiri kleśaughamapahartum || 3 ||",
    "303:8": "pravyāharanti madhuraṃ marudgaṇā harṣakararuciraghoṣāḥ |",
    "303:9": "paramasulabdhalābhāḥ śrutu yairayu bhūminirdeśaḥ || 4 ||",
    "303:10": "tūrya madhuraghoṣayukta marukanyāḥ prīṇitamanobhiḥ |",
    "303:11": "sucarasugatānubhāvādvaracaririyamīdṛśī proktā || 5 ||",
    "303:12": "sumanī sucaraṇaśreṣṭhaḥ sudānta damakāna lokamahitānām |",
    "303:13": "atikramya sarvalokaṃ lokacariṃ darśayī sūkṣmām || 6 ||",
    "303:14": "darśenti kāya vividhān kāyākāyāṃśca dharmatopetāḥ |",
    "303:15": "śamathaḥ samitivibhakto bhaṇati ghoṣaṃ na cākṣaraṃ ravati || 7 ||",
    "303:16": "kṣetraśatamākramante pūjenti nāyakān paramapūjiyān |",
    "303:17": "ātmajanitakṣetrasaṃjñā vidhunitvā jñānavaśavartī || 8 ||",
    "303:18": "paripācayanti sattvānna cātmaparasaṃjña sarvaśa upenti |",
    "303:19": "śubha saṃcinanti pravaraṃ na cāpi śubhasaṃcayaniketāḥ || 9 ||",
    "303:20": "rāgarajadoṣamohaiḥ paśyitva sarvaloka jvalamānān |",
    "303:21": "varjeti sarvasaṃjñā vīryaṃ varamārabhī kṛpayā || 10 ||",
    "303:22": "marukanyā devasaṃghāśca pūjentā varasvaram |",
    "303:23": "tūṣṇīṃbhāvaratāḥ sarve prekṣante puruṣarṣabham || 11 ||",
    "303:24": "pariṣadviprasanneyamavocat sugatātmajam |",
    "303:25": "saptamyā bhūmerākārān nirdiśasva guṇākara || 12 ||",
    "303:26": "upasaṃhāragāthāḥ |",
    "303:27": "gambhīrajñāna paramārthapadānusārī",
    "303:28": "ṣaḍbhūminiścitamatiḥ susamāhitātmā |",
    "303:29": "prajñāmupāya yugapadyabhinirharanto",
    "303:30": "bhūmyākramanti vidu saptami caryaśreṣṭhām || 13 ||",
    "303:31": "śūnyānimittapraṇidhīkṛpamaitrayuktā",
    "303:32": "buddhānudharma sugatānuga pūjayantaḥ |",
    "303:33": "jñānena śubhamahapuṇyabalebhyatṛptā-",
    "303:34": "stāmākramanti vidu saptami bhūmideśam || 14 ||",
    "303:35": "traidhātukena adhivāsa vivekaprāptāḥ",
    "303:36": "śāntaśca kleśabalaśāntijagābhikāṅkṣī |",
    "303:37": "pratibhāsa māya supinādvayadharmacārī",
    "303:38": "kṛpa darśayanti vidu saptamimākramanti || 15 ||",
    "303:39": "śodhenti kṣetra khasamāśaya nirvikalpā",
    "303:40": "jinalakṣanairupāgato'caladharmatāyām |",
    "303:41": "abhilāpyaghoṣavigatā jagatoṣaṇārthaṃ",
    "303:42": "kṣaṇajñāna cittasya jināna samosaranti || 16 ||",
    "303:43": "abhāsaprāpta iti dharma vicārayanti",
    "303:44": "ākrānta bhūmipravarāṃ jagadarthakārāḥ |",
    "303:45": "te atra bhūmyasthita sattvacarī anantān",
    "303:46": "vicinanti karma sugatān niyutāpramāṇān || 17 ||",
    "303:47": "kṣetrāṃśca naikavidhadharmatha kalpasaṃkhyān",
    "303:48": "adhimuktiāśaya ca cittavicitradhārān |",
    "303:49": "triyāṇadeśanamananta samosaranti",
    "303:50": "asmābhi sattva paripācayitavyametat || 18 ||",
    "303:51": "ye te jñānanicitā varamārgaprāptā",
    "303:52": "īryāpathaiścaturbhi prajñamupāyamuktāḥ |",
    "303:53": "sarvasmi cittakṣaṇi bodhiguṇānuprāptāḥ",
    "303:54": "paripūrayanti daśa pāramitāpradeśān || 19 ||",
    "303:55": "sarveṣu mārgakuśalasya ya eṣa dānaṃ",
    "303:56": "śīlaṃ ca kleśapraśamaṃ kṣamamakṣatitvam |",
    "303:57": "vīryaṃ ca bhūyu anu uttari ārabhante",
    "303:58": "mārge acalyataya dhyānaguṇānvitānām || 20 ||",
    "303:59": "anutpādakṣānti virajā varaprajña śreṣṭhā",
    "303:60": "parṇāmupāya praṇidhī bhuyu kāṅkṣi lakṣmī |",
    "303:61": "ato'mardayitva balajñānanitīraṇatvād",
    "303:62": "evaṃ khu bodhiguṇa sarvakṣaṇenupenti || 21 ||",
    "303:63": "ālambanātu prathamā guṇapāripūri",
    "303:64": "dvitīyā malāpanaya ūrdhva vibandhacchedam |",
    "303:65": "caturthāya mārgu samatākriya pañcamāya",
    "303:66": "anutpāda āhvaya viduḥ puna ṣaṣṭhavṛttiḥ || 22 ||",
    "303:67": "iha saptamīmupagatāḥ sakalaṃ guṇāni",
    "303:68": "praṇidhāna naikavividhānabhinirharanti |",
    "303:69": "kiṃ kāraṇaṃ yaduta jñānakriyābhyupenti",
    "303:70": "sā aṣṭamīprabhṛti sarvaviśuddhyupenti || 23 ||",
    "303:71": "duratikramā dūraṃgamā bahusthānakarmā",
    "303:72": "kṣetrāntaradvipathameva yathottaranti |",
    "303:73": "vicaranti saptasu alipta nṛpo yathaiva",
    "303:74": "mārgasthitā na puna sarvatikrānta dhīrāḥ || 24 ||",
    "303:75": "yada aṣṭamīmupagatāḥ puna jñānabhūmim",
    "303:76": "atikrānta cittaviṣaye sthita jñānakarme |",
    "303:77": "brahmā na pekṣati jagannaramānuṣātmā",
    "303:78": "evaṃ caranti vidu padmamivā aliptāḥ || 25 ||",
    "303:79": "atra sthitā vividhakleśamatikramanti",
    "303:80": "teṣāṃ na kleśacari no ca kṣayo'nuprāptiḥ |",
    "303:81": "mārgasthitā na tada kleśacariṃ caranti",
    "303:82": "saṃpūrṇa āśaya jinajña kṣayo na tāvat || 26 ||",
    "303:83": "ye laukikā vividhaśilpakriyāprayogā",
    "303:84": "ājāti sarvavidunā sthita śāstrajñāne |",
    "303:85": "dhyānā abhijña bala bhāvayanto'bhyupenti",
    "303:86": "bhūyaḥ samādhi vividhānabhinirharanti || 27 ||",
    "303:87": "atikrānta śravakacariṃ tatha pratyayānāṃ",
    "303:88": "sthita bodhisattvacaraṇe vidu apramāṇām |",
    "303:89": "pūrve hi āśayatayā iha jñānatāyā",
    "303:90": "nṛpatīsuto yatha vivṛddhabalopapetaḥ || 28 ||",
    "303:91": "gāmbhīryatāmupagatā bhuyu ārabhanti",
    "303:92": "cittaṃ nirodhupagatā na ca sākṣikriyāḥ |",
    "303:93": "yathā sāgare upagatāḥ sthita yānapātre",
    "303:94": "pratyakṣa sarva udake na ca yānahāniḥ || 29 ||",
    "303:95": "bhūyo upāyabalaprajñavarābhyupetā",
    "303:96": "durjñeyasarvajagajñānakriyāguṇāḍhyāḥ |",
    "303:97": "pūjenti buddha niyutā bhuyu śuddhibhāvā",
    "303:98": "yathā tadvibhūṣaṇavicitritu naikaratnaiḥ || 30 ||",
    "303:99": "atra sthitāna vidunāṃ varaprajña ābhā",
    "303:100": "śoṣenti tṛṣṇasalilaṃ yatha bhāskārābhāḥ |",
    "303:101": "te atra bhūmyupagatā vaśavartinaśca",
    "303:102": "bhonti kṛtī kuśala jñānaphalodeśaiḥ || 31 ||",
    "303:103": "ākāṅkṣamāṇa dṛḍhavīryabalābhyupetāḥ",
    "303:104": "koṭīnayūtaśata buddhasahasra pūrṇān |",
    "303:105": "paśyanti sarvadiśatāsu samāhitatvād",
    "303:106": "bhūyo'pyataḥ praṇidhiśreṣṭha guṇāprameyāḥ || 32 ||",
    "303:107": "durjñeyā sarvalokena vaśipratyekacāribhiḥ |",
    "303:108": "ityeṣā saptamī bhūmirupāyaprajñaśodhanā || 33 ||"
}