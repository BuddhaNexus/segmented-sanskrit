{
    "1421:0": "[4]",
    "1421:1": "abhisambodhikramaḥ caturthaḥ",
    "1421:2": "namaḥ śrīvajrasattvāya",
    "1421:3": "vajrasattvaṃ namaskṛtya sarvaśūnyopadeśakam|",
    "1421:4": "caturtho hyābhisambodhikramo'yaṃ vakṣyate mayā||1||",
    "1421:5": "asau svayambhūrbhagavān eka evādhidaivataḥ|",
    "1421:6": "upadeśapradānāt tu vajrācāryo'dhikastataḥ||2||",
    "1421:7": "tatsamārādhanaṃ kṛtvā varṣaṃ māsamathāpi vā|",
    "1421:8": "tasmai tuṣṭāya gurave pūjāṃ kuryāt tu śaktitaḥ||3||",
    "1421:9": "yathāsvabhāvato mudrāṃ nivedyāsmai suśikṣitām|",
    "1421:10": "gaṇamaṇḍalamadhye tu kuryāt pūjāṃ yathāvidhi||4||",
    "1421:11": "tatastuṣṭo mahāyogī pañcakāmopabhogataḥ|",
    "1421:12": "ālokasyodayaṃ kuryāt samāpattividhānataḥ||5||",
    "1421:13": "kalaśādau susaṃsthāpya bodhicittaṃ prayatnataḥ|",
    "1421:14": "ardharātre cābhisiñcet suśiṣyaṃ kṛpayā guruḥ||6||",
    "1421:15": "abhiṣekaṃ tu samprāpya pratyūṣamaye punaḥ|",
    "1421:16": "sampūjyārādhayet stotrairguruṃ śiṣyaṃ kṛtāñjaliḥ||7||",
    "1421:17": "traidhātukavinirmukta ākāśasamatāṃ gataḥ|",
    "1421:18": "nopariṣyasi kāmeṣu nirālamba namo'stu te||8||",
    "1421:19": "aniḥśrito'si skandheṣu dhātuṣvāyataneṣu ca|",
    "1421:20": "viparyāsavinirmukta nirālamba namo'stu te||9||",
    "1421:21": "avikalpitasaṅkalpa apratiṣṭhitamānasa|",
    "1421:22": "acintyamanasikāra nirālamba namo'stu te||10||",
    "1421:23": "anālayaṃ yathākāśaṃ niṣprapañcaṃ nirañcanam|",
    "1421:24": "ākāśasamacitto'si nirālamba namo'stu te||11||",
    "1421:25": "draṣṭukāmo'bhisambodhiṃ sarvaśūnyasvabhāvikām|",
    "1421:26": "stutvā kṛtāñjaliḥ śiṣyo guraṃ sañcodayet punaḥ||12||",
    "1421:27": "prayaccha me mahānātha abhisambodhidarśanam|",
    "1421:28": "karmajanmavinirmuktam ābhāsatrayavarjitam||13||",
    "1421:29": "prayaccha me mahācārya vajrajñānamanuttaram|",
    "1421:30": "sarvabuddhamahājñānaṃ sarvatāthāgatālayam||14||",
    "1421:31": "prayaccha me mahāvajra kāyavākcittaśodhanam|",
    "1421:32": "anādinidhanaṃ śāntaṃ sarvakleśaviśodhanam||15||",
    "1421:33": "evamārādhito yogī sadbhūtaguṇakīrtanaiḥ|",
    "1421:34": "śiṣye kāruṇyamutpādya kramamevamathārabhet||16||",
    "1421:35": "āloko rātribhāgaḥ sphuṭaravikiraṇaḥ syād divālokabhāsaḥ|",
    "1421:36": "sandhyālokopalabdhaḥ prakṛtibhirasakṛd yujyate svābhiretat|",
    "1421:37": "no rātrirnāpi sandhyā na ca bhavati divā yaḥ prakṛtyā vimuktaḥ",
    "1421:38": "sa syād bodhikṣaṇo'yaṃ varagurukathito yogināmeva gamyaḥ||17||",
    "1421:39": "naiśaṃ dhvāntaṃ vinaṣṭaṃ vyapagatamakhilaṃ sāndhyatejastu yasmin",
    "1421:40": "bhāsvānnodeti yāvat kṣaṇa iha vimale darśayed bhūtakoṭim|",
    "1421:41": "śiṣyāyācāryamukhyo vinihatatimiro bāhyasambodhidṛṣṭyā",
    "1421:42": "prāpnotyadhyātmasaukhyaṃ vyapagatakaluṣaṃ buddhabodhiṃ kṣaṇena||18||",
    "1421:43": "anādibhūtaṃ tvathavādibhūtaṃ",
    "1421:44": "amadhyabhūtaṃ tvatha madhyabhūtam|",
    "1421:45": "anantabhūtaṃ tvathavāntabhūtaṃ",
    "1421:46": "tat sarvaśūnyaṃ pravadanti santaḥ||19||",
    "1421:47": "gamanāgamanaṃ ca yatra nāsti",
    "1421:48": "kṣayavṛddhī na cāpyabhāvabhāvau|",
    "1421:49": "ativismayarūpam arūpyavismayaṃ",
    "1421:50": "sthitimannāpi na cāpi gatvaram||20||",
    "1421:51": "yadasti-nāstivyavahāramuktaṃ",
    "1421:52": "na puṇyarūpaṃ na ca pāparūpam|",
    "1421:53": "na puṇyapāpātmakamagrabhūtaṃ",
    "1421:54": "tat sarvaśūnyaṃ pravadanti buddhāḥ||21||",
    "1421:55": "evaṃvidhaṃ tattvamavāpya yogī",
    "1421:56": "carācarātmā jagadekabandhuḥ|",
    "1421:57": "yaḥ paryaṭejjñānamayo nṛsiṃhaḥ",
    "1421:58": "kṛtsnaṃ jagat so'vyayakāyalābhī||22||",
    "1421:59": "sa jihyakāyo'pyavijihyakāyaḥ",
    "1421:60": "so'nāsano'pyāsanabandhadhīraḥ|",
    "1421:61": "samīlitākṣo'pi vibuddhanetraḥ",
    "1421:62": "samāhitaḥ sanna samāhitau'sau||23||",
    "1421:63": "sa vāgyuto vāgasamanvito'pi",
    "1421:64": "bhogānvitaḥ so'pi virupavṛttiḥ|",
    "1421:65": "sa lokanāthaḥ parabhṛtyabhūto",
    "1421:66": "yastattvavit kṣīṇasamastadoṣaḥ||24||",
    "1421:67": "prāptopadeśakaḥ śiṣyo dvidhā yogamathābhyaset|",
    "1421:68": "piṇḍagrāhakrameṇaiva tathā caivānubhedataḥ||25||",
    "1421:69": "śirasaḥ pādato cāpi yāvaddhṛdayamāgataḥ|",
    "1421:70": "bhūtakoṭiṃ viśed yogī piṇḍagrāha iti smṛtaḥ||26||",
    "1421:71": "sthāvaraṃ jaṅgamaṃ caiva pūrvaṃ kṛtvā prabhāsvaram|",
    "1421:72": "paścāt kuryāt tathā''tmānam anubhedakramo hyayam||27||",
    "1421:73": "śvāsavāto yathā''darśe layaṃ gacchati sarvataḥ|",
    "1421:74": "bhūtakoṭiṃ tathā yogī praviśocca muhurmuhuḥ||28||",
    "1421:75": "gacchaṃstiṣṭhan svapan bhuñjannunmiṣan nimiṣan hasan|",
    "1421:76": "anena dhyānayogena sadā tiṣṭhati tattvavit||29||",
    "1421:77": "sattvārtho'pi kadācit syāt tattatsārūpyaraśminā|",
    "1421:78": "vāyuvijñānayuktena svādhiṣṭhānakrameṇa tu||30||",
    "1421:79": "yathā nadījalāt svacchānmīnamuttiṣṭhate drutam|",
    "1421:80": "sarvaśūnyāt tathā svacchānmāyājālamudīryate||31||",
    "1421:81": "pañcabuddhakulāyattā mahāmudrādikalpanā|",
    "1421:82": "pañcaraśmisamucchreyā gagane śakracāpavat||32||",
    "1421:83": "mudrābandhaṃ prakuryād vā mantraṃ cāpi japed yadi|",
    "1421:84": "sarvamanyat prakuryācca sarvaśūnyapade sthitaḥ||33||",
    "1421:85": "sarvabhuk sarvapaścaiva sarvavandī ca sarvagaḥ|",
    "1421:86": "sarvakṛt sarvaliṅgī ca sarvaśūnyena sidhyati||34||",
    "1421:87": "prāptopadeśaḥ subhagaḥ suśiṣyo",
    "1421:88": "baudhau hi cittaṃ paramārthanāma|",
    "1421:89": "guroḥ sakāśāt punarādadīta",
    "1421:90": "kṛtāñjalirdhāritapuṣpahastaḥ||35||",
    "1421:91": "sarvabhāvavigataṃ skandhadhātvāyatanagrāhyagrāhakavarjitaṃ dharmanairātmyasamatayā svacittam ādyanutpannaṃ śūnyatāsvabhāvamiti|",
    "1421:92": "tatastu gurave dadyād dakṣiṇāṃ tvanurūpataḥ|",
    "1421:93": "ratnaṃ gṛhaṃ vā hastyaśvaṃ grāmaṃ vā śayanāsanam||36||",
    "1421:94": "dāsaṃ dāsīṃ priyāṃ bhāryāṃ putrīṃ cāpyativarṇabhām|",
    "1421:95": "ātmānaṃ cāpi yaddadyāt kimanyadavaśiṣyate||37||",
    "1421:96": "prāptācāryaprasādo vimaladṛḍhamatiḥ sarvabhāvasvabhāvaḥ",
    "1421:97": "svacchaṃ śuddhaṃ susūkṣmaṃ paramaśivamayaṃ buddhanirvāṇadhātum|",
    "1421:98": "nirdvandvaṃ nirvikalpaṃ satatasukhamayaṃ bhāvayet tattvayogī",
    "1421:99": "puṇyāpuṇyād vimuktaḥ svayamiha bhagavān jāyate vajrasattvaḥ||38||",
    "1421:100": "|paramarahasyasukhābhisambodhikramaścaturthaḥ samāptaḥ||",
    "1421:101": "kṛtiriyam ācāryanāgārjunapādānām|",
    "1421:102": "granthapramāṇamasya ślokāścatvāriṃśat|"
}