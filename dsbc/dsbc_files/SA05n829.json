{
  "SA05n829:0": "saptavidhānuttarastotram",
  "SA05n829:1": "namaḥ śrīlokanāthāya",
  "SA05n829:2": "amitaruciśiraḥsthaṃ padmapatrāyatākṣaṃ",
  "SA05n829:3": "duritakṛtavināśaṃ mohamāyā'hitākṣam |",
  "SA05n829:4": "karadhṛtakanakābjaṃ lokapālaikadakṣaṃ",
  "SA05n829:5": "praṇamitaśirasā'haṃ naumi taṃ lokanātham || 1 ||",
  "SA05n829:6": "aruṇavaruṇaśobhābodhivijñānahetuṃ",
  "SA05n829:7": "maṇimayamukuṭaṃ saṃsārakāmbhodhisetum |",
  "SA05n829:8": "kṛtamanasijanāśaṃ bodhisattvādiketuṃ",
  "SA05n829:9": "praṇamitaśirasā'haṃ naumi taṃ lokanātham || 2 ||",
  "SA05n829:10": "sarasijakṛtavāsaṃ dūrakandarpapāśaṃ",
  "SA05n829:11": "suranaradanujāśaṃ pūrṇacandraprakāśam |",
  "SA05n829:12": "sukṛtajanavilāsaṃ koṭisūryāvabhāsaṃ",
  "SA05n829:13": "praṇamitaśirasā'haṃ naumi taṃ lokanātham || 3 ||",
  "SA05n829:14": "urasi vihitanāgaṃ mocitāśeṣarāgaṃ",
  "SA05n829:15": "bhavajaladhivibhāgaṃ mokṣasaukhyaikamārgam |",
  "SA05n829:16": "pratapitakanakāṅgaṃ bodhibodhaikarāgaṃ",
  "SA05n829:17": "praṇamitaśirasā'haṃ naumi taṃ lokanātham || 4 ||",
  "SA05n829:18": "jinavarasutarājaṃ muktimālāvirājaṃ",
  "SA05n829:19": "sulalitaphaṇirājaṃ kīrṇitācābhirājam |",
  "SA05n829:20": "pramuditavalirājaṃ pālitāmartyarājaṃ",
  "SA05n829:21": "praṇamitaśirasā'haṃ naumi taṃ lokanātham || 5 ||",
  "SA05n829:22": "dhṛtamadhukararūpaṃ kṣuptipāsāntakūpaṃ",
  "SA05n829:23": "sucaritahayarūpaṃ siṃhalādantabhūpam |",
  "SA05n829:24": "agurusurabhidhūpaṃ dhāritāśeṣarūpaṃ",
  "SA05n829:25": "praṇamitaśirasā'haṃ naumi taṃ lokanātham || 6 ||",
  "SA05n829:26": "trividhavidhṛtapāpaṃ me harantaṃ tritāpaṃ",
  "SA05n829:27": "pratidinamitijāpaṃ devacakre vilāpam |",
  "SA05n829:28": "nirayabhayakalāpaṃ bhedakājñānacāpaṃ",
  "SA05n829:29": "praṇamitaśirasā'haṃ naumi taṃ lokanātham || 7 ||",
  "SA05n829:30": "vihitaśubhajanānāṃ muktitāpodyatānāṃ",
  "SA05n829:31": "vigalitakaluṣāṇāṃ bhaktipūjāratānām |",
  "SA05n829:32": "varakuśalasamūhaṃ saṃprapede svabhaktyā",
  "SA05n829:33": "praṇamitaśirasā'haṃ naumi taṃ lokanātham || 8 ||",
  "SA05n829:34": "daśabalakṛtasiddhiṃ saṃvadhe buddhabodhiṃ",
  "SA05n829:35": "jananamaraṇabhītaṃ mārapāśābhinītam |",
  "SA05n829:36": "manasi malinavṛtte pūritājñānavitte",
  "SA05n829:37": "praṇamitaśirasā'haṃ naumi taṃ lokanātham || 9 ||",
  "SA05n829:38": "pravarasugataratnaṃ dharmakāyaṃ saṃsaṃghaṃ",
  "SA05n829:39": "kṣaraṇamiha prayāmi kāritānaṅgabhaṅgam |",
  "SA05n829:40": "pramuditamanasāptaṃ bodhilābhaikayatnaṃ",
  "SA05n829:41": "praṇamitaśirasā'haṃ naumi taṃ lokanātham || 10 ||",
  "SA05n829:42": "śrīlokanāthacaraṇāmbujabhaktipadma-",
  "SA05n829:43": "pīyūṣanandaracitānativistarāḍhyam |",
  "SA05n829:44": "yatsaptadhārcanayutaṃ sarasātihṛdyaṃ",
  "SA05n829:45": "saukhyāvatīgamanamārgakaraṃ tu sadyaḥ || 11 ||",
  "SA05n829:46": "stutvā lokaguruṃ munīśvaramimaṃ sarvārthasiddhipradaṃ",
  "SA05n829:47": "yatpuṇyaṃ samupārjitaṃ vrajatu tatpuṇyena saukhyāvatīm |",
  "SA05n829:48": "śrīlokeśvarapādapaṅkajarasollāsaikaharṣoditaṃ",
  "SA05n829:49": "lokakleśaharaṃ sudurjayavaraṃ jitvā pramuktāmalam || 12 ||",
  "SA05n829:50": "śrīmadāryāvalokiteśvarasya saptavidhānuttararastotraṃ samāptam |"
}