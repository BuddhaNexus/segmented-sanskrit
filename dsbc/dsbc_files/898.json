{
    "898:0": "vajrapāṇināmāṣṭottaraśatastotram",
    "898:1": "vajrasattva mahāsattva mahāyāna mahātmaka |",
    "898:2": "mahāprabha mahāśuddha mahānātha namo'stu te || 1 ||",
    "898:3": "vajrarāja mahāvajra vajra sarvatathāgata |",
    "898:4": "mahāsattva mahāvīrya mahopāya namo'stu te || 2 ||",
    "898:5": "vajrarāga mahāśuddha sarvasaukhya mahāsukha |",
    "898:6": "sukhāgryānādinidhana mahākāma namo'stu te || 3 ||",
    "898:7": "vajrasādhu mahātuṣṭi sādhukāra praharṣaka |",
    "898:8": "mahāharṣa mahāmoda suprāmodya namo'stu te || 4 ||",
    "898:9": "vajraratna mahārāja svābhiṣeka mahāmate |",
    "898:10": "sarvaratna mahāśobhavibhūṣaṇa namo'stu te || 5 ||",
    "898:11": "vajrateja mahāteja vajraprabha mahādyute |",
    "898:12": "jinaprabha mahājvāla buddhaprabha namo'stu te || 6 ||",
    "898:13": "vajraketu mahāketu mahādhvaja dhanaprada |",
    "898:14": "ākāśaketo mahāyaṣṭi tyāgadhvaja namo'stu te || 7 ||",
    "898:15": "vajrahāsa mahāhāsa mahāprītipramodana |",
    "898:16": "prītivega ratiprīte dharmaprīte namo'stu te || 8 ||",
    "898:17": "vajradharma mahādharma sarvadharmasuśodhaka |",
    "898:18": "buddhadharma sudharmāgrya rāgadharma namo'stu te || 9 ||",
    "898:19": "vajratīkṣṇa mahākośa prajñājñāna mahāmate |",
    "898:20": "pāpacchedamahākhaḍga buddhaśastra namo'stu te || 10 ||",
    "898:21": "vajrahetu mahācakra buddhacakra mahānidhe |",
    "898:22": "sarvamaṇḍaladharmāgra dharmacakra namo'stu te || 11 ||",
    "898:23": "vajrabhāṣa mahābhāṣa niṣprapañca mahākṣara |",
    "898:24": "anakṣara mahājāpa buddhavāca namo'stu te || 12 ||",
    "898:25": "vajrakarma sukarmāgrya mahākarma sukarmakṛt |",
    "898:26": "guhyapūja mahāpūja buddhapūja namo'stu te || 13 ||",
    "898:27": "vajrarakṣa mahāvarma kavacāgrya mahādṛḍha |",
    "898:28": "mahārakṣa mahāsāra buddhavīrya namo'stu te || 14 ||",
    "898:29": "vajrayakṣa mahākrodha sarvaduṣṭabhayānaka |",
    "898:30": "sarvabuddhamahopāya agrayakṣa namo'stu te || 15 ||",
    "898:31": "mahāsandhi mahāmudra mahāsamayabandhaka |",
    "898:32": "mahāmuṣṭe samudrāgrya vajramuṣṭe namo'stu te || 16 ||",
    "898:33": "vandyo mānyaśca pūjyaśca satkartavyastathāgataiḥ |",
    "898:34": "yasmādanādinidhanaṃ bodhicittaṃ tvamucyase || 17 ||",
    "898:35": "tvāmāsādya jināḥ sarve bodhisattvāśca śauriṇaḥ |",
    "898:36": "saṃbhūtāḥ saṃbhaviṣyanti buddhabodhyagrahetavaḥ || 18 ||",
    "898:37": "namaste vajrasattvāya vajraratnāya te namaḥ |",
    "898:38": "namaste vajradharmāya namaste vajrakarmaṇe || 19 ||",
    "898:39": "tvāmabhiṣṭutya nāmāgraiḥ praṇamya ca subhāvataḥ |",
    "898:40": "yatpuṇyaṃ tena sarvo hi buddhabodhimavāpnuyāt || 20 ||",
    "898:41": "idamuccārayetsamyag nāmāṣṭaśatamuttamam |",
    "898:42": "sakṛdvāraṃ subhaktisthaḥ sarvabuddhatvamāpnuyāt || 21 ||",
    "898:43": "śrīvajrapāṇināmāṣṭottaraśatastotraṃ samāptam |"
}