{
    "897:0": "vāgīśvaravarṇanāstotram",
    "897:1": "brahmādidevamanujāsurapūjitāṅgaṃ",
    "897:2": "jñānādisarvanilayaṃ guṇarājavantam |",
    "897:3": "jñānādhipaṃ guṇamayaṃ guṇavṛddhimantaṃ",
    "897:4": "vāgīśvaraṃ suraguruṃ satataṃ namāmi || 1 ||",
    "897:5": "vedādiśāstraracanākhilamantravijñaṃ",
    "897:6": "stotraiḥ kathādibhiraśeṣasugītaśabdam |",
    "897:7": "yaṃ kīryayanti munayo naravāṇyabhijñaṃ",
    "897:8": "vāgīśvaraṃ suraguruṃ satataṃ namāmi || 2 ||",
    "897:9": "jñānapradhānakaśarīramacintyabuddhiṃ",
    "897:10": "vācaspatiṃ divi bhuvi stutakīrtidaṃ tam |",
    "897:11": "jñāneśvaraṃ tribhuvaneśacarācaraṃ taṃ",
    "897:12": "vāgīśvaraṃ suraguruṃ satataṃ namāmi || 3 ||",
    "897:13": "ratnādiśilpaparikalpanapūrṇajñeyaṃ",
    "897:14": "citraṃ vicitritaguṇaṃ janamānanīyam |",
    "897:15": "sarvajñakārakadharād hṛdi brahmapuñjaṃ",
    "897:16": "vāgīśvaraṃ suraguruṃ satataṃ namāmi || 4 ||",
    "897:17": "caryāvidhau ratipatiṃ sthiradhairyabodhiṃ",
    "897:18": "dhyānādhipaṃ vividhinā sukharañjanīyam |",
    "897:19": "vidyāpratiṣṭhitaguruṃ bhuvanetipūrṇaṃ",
    "897:20": "vāgīśvaraṃ suraguruṃ satataṃ namāmi || 5 ||",
    "897:21": "vāṇīpatiṃ bhujacatuṣṭayabāṇacāpaṃ",
    "897:22": "pustaṃ kṛpāṇamaniśaṃ kramaśo dadhānam |",
    "897:23": "sarveṣṭadaṃ jagati yaccaṇāravindaṃ",
    "897:24": "vāgīśvaraṃ suraguruṃ satataṃ namāmi || 6 ||",
    "897:25": "śrīvāgīśvaravarṇanāstotraṃ samāptam |"
}