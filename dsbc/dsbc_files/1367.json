{
    "1367:0": "aṣṭamo'dhikāraḥ",
    "1367:1": "bodhisattvaparipāke saṃgrahaḥ ślokaḥ|",
    "1367:2": "rūciḥ prasādaḥ praśamo 'nukampanā",
    "1367:3": "kṣamātha medhā prabalatvameva ca|",
    "1367:4": "ahāryatāṅgaiḥ samupetatā bhṛśaṃ",
    "1367:5": "jinātmaje tatparipākalakṣaṇam||1||",
    "1367:6": "rūcirmahāyānadeśanādharme,",
    "1367:7": "prasādastaddeśike,",
    "1367:8": "praśamaḥ kleśānām,",
    "1367:9": "anukampā sattveṣu,",
    "1367:10": "kṣamā duṣkaracaryāyāṃ,",
    "1367:11": "medhā grahaṇadhāraṇaprativedheṣu,",
    "1367:12": "prabalatvamadhigame,",
    "1367:13": "ahāryatā māraparapravādibhiḥ,",
    "1367:14": "prāhāṇikāṅgaiḥ samanvāgatatvam|",
    "1367:15": "bhṛśamiti rūcyādīnāmadhimātratvaṃ darśayati|",
    "1367:16": "eṣa samāsena bodhisattvānāṃ navaprakāra ātmaparipāko veditavyaḥ|",
    "1367:17": "rūciparipākamārabhya ślokaḥ|",
    "1367:18": "sumitratāditrayamugravīryatā parārdhaniṣṭhottamadharmasaṃgrahaḥ|",
    "1367:19": "kṛpālusaddharmamahāparigrahe mataṃ hi samyakparipākalakṣaṇam||2||",
    "1367:20": "sumitratāditrayaṃ satpuruṣasaṃsevā saddharmaśravaṇaṃ yoniśomanasikāraśca|",
    "1367:21": "ugravīryatā adhimātro vīryārambhaḥ|",
    "1367:22": "parārdhaniṣṭhā sarvācintyasthānanirvicikitsatā|",
    "1367:23": "uttamadharmasaṃgraho mahāyānadharmarakṣā,",
    "1367:24": "tatpratipannānāmupadravebhyo rakṣaṇāt|",
    "1367:25": "bodhisattvasya mahāyānadharmaparigrahamadhikṛtyedaṃ rūciparipākalakṣaṇaṃ veditavyam|",
    "1367:26": "yena kāraṇena paripacyate sumitratāditrayeṇa|",
    "1367:27": "yaśca tasyāḥ paripāka ugravīryaparārdhaniṣṭhāyuktaḥ svabhāvaḥ|",
    "1367:28": "yatkarma cottamadharmasaṃgrahakaraṇāttadetena paridīṣitam|",
    "1367:29": "prasādaparipākamārabhya ślokaḥ|",
    "1367:30": "guṇajñatāthāśusamādhilābhitā",
    "1367:31": "phalānubhūtirmanaso'dhyabheda[dya ?]tā|",
    "1367:32": "jīnātmaje śāstari saṃprapattaye",
    "1367:33": "mataṃ hi samyakparipākalakṣaṇam||3||",
    "1367:34": "tatparipāko'pi kāraṇataḥ svabhāvataḥ karmataśca paridīpitaḥ|",
    "1367:35": "guṇajñatā ityapi sa bhagavāṃstathāgata iti vistareṇa kāraṇam|",
    "1367:36": "avetyaprabhāva[sāda]lābhādabhedyacittatā svabhāvaḥ|",
    "1367:37": "āśusamādhilābhastatphalasya cābhijñādikasya pratyanubhavanaṃ karma|",
    "1367:38": "praśamaparipākamārabhya ślokaḥ|",
    "1367:39": "susaṃvṛtiḥ kliṣṭavitarkavarjanā",
    "1367:40": "nirantarāyo'tha śubhābhirāmatā|",
    "1367:41": "jinātmaje kleśavinodanāyatan-",
    "1367:42": "mataṃ hi samyakparipākalakṣaṇam||4||",
    "1367:43": "kleśavinodanā bodhisattvasya praśamaḥ|",
    "1367:44": "tatparipāko 'pi kāraṇataḥ svabhāvataḥ karmataśca paridīpitaḥ|",
    "1367:45": "indriyāṇāṃ smṛtisaṃprajanyābhyāṃ susaṃvṛtiḥ kāraṇam|",
    "1367:46": "kliṣṭavitarkavarjanā svabhāvaḥ|",
    "1367:47": "pratipakṣabhāvanāyāṃ nirantarāyatvaṃ kuśalābhirāmatā ca karma|",
    "1367:48": "kṛpāparipākalakṣaṇamadhikṛtya ślokaḥ|",
    "1367:49": "kṛpā prakṛtyā paraduḥkhadarśanaṃ",
    "1367:50": "nihīnacittasya ca saṃpravarjanam|",
    "1367:51": "viśeṣagatvaṃ jagadagrajanmatā",
    "1367:52": "parānukampāparipākalakṣaṇam||5||",
    "1367:53": "svaprakṛtyā ca gotreṇa paraduḥkhadarśanena nihīnayānaparivarjanatayā ca paripacyata itikāraṇam|",
    "1367:54": "viśeṣagāmitvaṃ paripākavṛddhigamanāt svabhāvaḥ|",
    "1367:55": "sarvalokaśreṣṭhātmabhāvatā karma avinivartanīyabhūmau|",
    "1367:56": "kṣāntiparipākalakṣaṇamārabhya ślokaḥ|",
    "1367:57": "ghṛtiḥ prakṛtyā pratisaṃkhyabhāvanā",
    "1367:58": "suduḥkhaśītādyadhivāsanā sadā|",
    "1367:59": "viśeṣagāmitvaśubhābhirāmatā",
    "1367:60": "mataṃ kṣamāyāḥ paripākalakṣaṇam||6||",
    "1367:61": "dhṛtiḥ sahanaṃ kṣāntiriti paryāyāḥ tatatparipāke gotraṃ pratisaṃkhyānaṃ bhāvanā ca kāraṇam|",
    "1367:62": "tīvrāṇāṃ śītādiduḥkhānāmadhivāsanāsvabhāvaḥ|",
    "1367:63": "kṣamasya viśeṣagāmitvaṃ kuśalābhirāmatā ca karma|",
    "1367:64": "medhāparipākamārabhya ślokaḥ|",
    "1367:65": "vipākaśuddhiḥ śravaṇādyamoṣatā",
    "1367:66": "praviṣṭatā sūktadurūktayostathā|",
    "1367:67": "smṛtermahābuddhyudaye ca yogyatā",
    "1367:68": "sumedhatāyāḥ paripākalakṣaṇam||7||",
    "1367:69": "tatra medhānukūlā vipākaviśuddhiḥ kāraṇam|",
    "1367:70": "śrutacintitabhāvitacirakṛtacirabhāṣitānāmasaṃmoṣatā subhāṣitadurbhāṣitārthasupraviṣṭatā ca smṛtermedhāparipākasvabhāvaḥ|",
    "1367:71": "lokottaraprajñotpādanayogyatā karma|",
    "1367:72": "balavatvapratilambhaparipākamārabhya ślokaḥ|",
    "1367:73": "śubhadvayena dvayadhātupuṣṭatā phalodaye cāśrayayogyatā parā|",
    "1367:74": "manorathāptirjagadagrabhūtatā balopalambhe paripākalakṣaṇam||8||",
    "1367:75": "tatra puṇyajñānadvayena tasya puṇyajñānadvayasya bījapuṣṭatā tatparipāke kāraṇam|",
    "1367:76": "adhigamaṃ pratyāśrayayogyatā tatparipākasvabhāvaḥ|",
    "1367:77": "manorathasaṃpattirjagadagrabhūtatā ca karma|",
    "1367:78": "ahāryatāparipākamārabhya ślokaḥ|",
    "1367:79": "sudharmatāyuktivicāraṇāśayo",
    "1367:80": "viśeṣalābhaḥ parapakṣadūṣaṇam|",
    "1367:81": "punaḥ sadā māranirantarāyatā",
    "1367:82": "ahāryatāyāḥ paripākalakṣaṇam||9||",
    "1367:83": "tatparipākasya saddharme yuktivicāraṇākṛta āśayaḥ kāraṇam|",
    "1367:84": "māranirantarāyatā svabhāvo yadā māro na punaḥ śankotyantarāyaṃ kartum|",
    "1367:85": "viśeṣādhigamaḥ parapakṣadūṣaṇaṃ ca karma|",
    "1367:86": "prāhāṇikāṅgasamanvāgamaparipākamadhikṛtya ślokaḥ|",
    "1367:87": "śubhācayo 'thāśrayayatnayogyatā",
    "1367:88": "vivekatodagraśubhābhirāmatā|",
    "1367:89": "jinātmaje hyaṅgasamanvaye puna-",
    "1367:90": "rmataṃ hi samyakparipākalakṣaṇam||10||",
    "1367:91": "tatparipākasya kāraṇaṃ kuśalamūlopacayaḥ|",
    "1367:92": "āśrayasya vīryārambhakṣamatvaṃ svabhāvaḥ|",
    "1367:93": "vivekotkṛṣṭatā kuśalābhirāmatā ca karma|",
    "1367:94": "navavidhātmaparipākamāhātmyamārabhya ślokaḥ|",
    "1367:95": "iti navavidhavastupacitātmā",
    "1367:96": "paraparipācanayogyatāmupetaḥ|",
    "1367:97": "śubha[dharma]mayasatatapravardhitātmā",
    "1367:98": "bhavati sadā jagato 'grabandhubhūtaḥ||11||",
    "1367:99": "dvividhaṃ tanmāhātmyam|",
    "1367:100": "paraparipāke pratiśaraṇatvam|",
    "1367:101": "satataṃ dharmakāyavṛddhiśca|",
    "1367:102": "tata eva jagato 'grabandhubhūtaḥ|",
    "1367:103": "sattvaparipākavibhāge ekādaśa ślokāḥ|",
    "1367:104": "vraṇe'pi bhojye paripāka iṣyate yathaiva tatsrāvaṇabhogayogyatā|",
    "1367:105": "tathāśraye'smindvayapakṣaśāntatā[tāṃ]tathopabhogatvasuśāntapakṣatā[muśantipavkatām]||12||",
    "1367:106": "anena paripākasvabhāvaṃ darśayati|",
    "1367:107": "yathā vraṇasya srāvaṇayogyatā paripākaḥ|",
    "1367:108": "bhojanasya ca bhogayogyatā|",
    "1367:109": "evaṃ sattvānāmāśraye vraṇabhojanasthānīye srāvaṇasthānīyaṃ vipakṣaśamanam|",
    "1367:110": "bhogasthānīyaśca pratipakṣopabhogaḥ|",
    "1367:111": "tadyogyatā āśrayasya paripāka iti|",
    "1367:112": "vipakṣapratipakṣāvatra pakṣadvayaṃ veditavyam|",
    "1367:113": "dvitīyaślokaḥ|",
    "1367:114": "vipācanoktā paripācanā tathā",
    "1367:115": "paripācanā cāpyanupācanāparā|",
    "1367:116": "supācanā[cā]pyadhipācanā matā",
    "1367:117": "nipācanotpācananā ca dehiṣu||13||",
    "1367:118": "anena paripākaprabhedaṃ darśayati|",
    "1367:119": "kleśavigamena pācananā [pācanā ?] vipācanā|",
    "1367:120": "sarvato yānatrayeṇa pācanā paripācanā|",
    "1367:121": "bāhyaparipākaviśiṣṭatvāt prakṛṣṭā pācanā prapācanā|",
    "1367:122": "yathāvineyadharmadeśanāttadanurūpā pācanā anupācanā|",
    "1367:123": "satkṛtya pācanā supācanā|",
    "1367:124": "adhigamena pācanā adhipācanā aviparītārthena|",
    "1367:125": "nityā pācanā nipācanā aparihāṇīyārthena|",
    "1367:126": "krameṇottarottarapācanā utpācanā|",
    "1367:127": "ityayamaṣṭaprakāraḥ pariparipākaprabhedaḥ|",
    "1367:128": "tṛtīyacaturthau ślokau|",
    "1367:129": "hitāśayeneha yathā jinātmajo",
    "1367:130": "vyavasthitaḥ sarvajagadvipācayan|",
    "1367:131": "tathā na mātā na pitā na bandhavaḥ",
    "1367:132": "suteṣu bandhuṣvapi suvyavasthitāḥ||14||",
    "1367:133": "tathājano nātmani vatsalo mataḥ",
    "1367:134": "kuto'pi susnigdhaparāśraye jane|",
    "1367:135": "yathā kṛpātmā parasattvavatsalo",
    "1367:136": "hite sukhe caiva niyojanānmataḥ||15||",
    "1367:137": "ābhyāṃ kiṃ darśayati|",
    "1367:138": "yādṛśenāśayena bodhisattvaḥ sattvānparipācayati tamāśayaṃ darśayati|",
    "1367:139": "mātāpitṛbāndhavāśayaviśiṣṭaṃ lokātmavātsalyaviśiṣṭaṃ ca hitasukhasaṃyojanāt|",
    "1367:140": "ātmavatsalastu loka ātmānaṃ hite ca sukhe ca saṃniyojayati|",
    "1367:141": "avaśiṣṭaiḥ ślokairyena prayogeṇa sattvānparipācayati taṃ pāramitā pratipattyā saṃdarśayati|",
    "1367:142": "yādṛśena dānena yathā sattvānparipācayati tadārabhya ślokaḥ|",
    "1367:143": "na bodhisattvasya śarīrabhogayoḥ pareṣvadeyaṃ punarasti sarvathā|",
    "1367:144": "anugraheṇa dvividhena pācayan paraṃ samairdānaguṇairna tṛpyate||16||",
    "1367:145": "trividhena dānena pācayati|",
    "1367:146": "sarvasvaśarīrabhogadānena aviṣamadānena atṛptidānena ca|",
    "1367:147": "kathaṃ paripācayati dṛṣṭadharmasaṃparāyānugraheṇa|",
    "1367:148": "avighātenecchāparipūrṇāt [pūraṇāt]|",
    "1367:149": "anāgatena [tena] ca saṃgṛhya kuśalapratiṣṭhāpanāt|",
    "1367:150": "yādṛśena śīlena yathā satvānparipācayati tadārabhya ślokaḥ|",
    "1367:151": "sadāprakṛtyādhyavihiṃsakaḥ svayaṃ",
    "1367:152": "rato'pramatto'tra paraṃ niveśayan|",
    "1367:153": "paraṃparānugrahakṛdūdvidhā pare",
    "1367:154": "vipākaniṣyandaguṇena pācakaḥ||17||",
    "1367:155": "pañcavidhena śīlena|",
    "1367:156": "dhruvaśīlena prakṛtiśīlena paripūrṇaśīlenādhyaviṃhiṃsakatvāt|",
    "1367:157": "paripūrṇo hyavihiṃsako 'dhyavihiṃsako daśakuśalakarmapathaparipūritaḥ|",
    "1367:158": "yathoktaṃ dvitīyāyāṃ bhūmau|",
    "1367:159": "adhigamaśīlena svayaṃratatayā nirantarāskhalitaśīlena cāpramattatayā|",
    "1367:160": "kathaṃ ca paripācayati|",
    "1367:161": "śīle saṃniveśanāt|",
    "1367:162": "dvidhānugrahakriyayā dṛṣṭadharme saṃparāye ca|",
    "1367:163": "saṃparāyānugrahaṃ pareṣu vipākaniṣyandaguṇābhyāṃ paraṃparayā karoti|",
    "1367:164": "tadvipākaniṣyandayoranyonyānukūlyenāvyavacchedāt|",
    "1367:165": "yādṛśyā kṣāntyā yathā sattvānparipācayati tadārabhya ślokaḥ|",
    "1367:166": "pare'pakāriṇyupakāribuddhimān",
    "1367:167": "pramarṣayannugramapi vyatikramam|",
    "1367:168": "upāyacittairapakāramarṣaṇaiḥ",
    "1367:169": "śubhe samādāpayate'pakāriṇaḥ||18||",
    "1367:170": "apakāriṇi pare upakāribuddhyā pragāḍhāpakāramarṣaṇakṣāntyā paripācayati|",
    "1367:171": "upakāribuddhitvaṃ punaḥ kṣāntipāramitāparipūryānukūlyavṛttitā veditavyam|",
    "1367:172": "kathaṃ paripācayati|",
    "1367:173": "dṛṣṭadharmānugraheṇa cāpakāramarṣaṇāt|",
    "1367:174": "saṃparāyānugraheṇa copāyajñastairapakāramarṣaṇairāvarjyāpakāriṇāṃ kuśale samādāpanāt|",
    "1367:175": "yādṛśena vīryeṇa yathā sattvānparipācayati tadārabhya ślokaḥ|",
    "1367:176": "punaḥ sa yatnaṃ paramaṃ samāśrito",
    "1367:177": "na khidyate kalpasahasrakoṭibhiḥ|",
    "1367:178": "jinātmajaḥ sa[ttva]gaṇaṃ",
    "1367:179": "prapācayanparaikacittasya śubhasya kāraṇāt||19||",
    "1367:180": "adhimātradīrghakālākhede vīryeṇa dīrghakālākheditvamanantasattvaparipācanāt|",
    "1367:181": "paraikacittasya kuśalasyārthe kalpasahasrakoṭibhirakhedāt|",
    "1367:182": "ata evoktaṃ bhavati yathā paripācayati|",
    "1367:183": "kuśalacittasaṃniyojanāt dṛṣṭadharmasaṃparāyānugraheṇeti|",
    "1367:184": "yādṛśena dhyānena yathā sattvānparipācayati tadārabhya ślokaḥ|",
    "1367:185": "vaśitvamāgamya manasyanuttaraṃ",
    "1367:186": "paraṃ samāvarjayate'tra śāsane|",
    "1367:187": "nihatya sarvāmavamānakāmatāṃ",
    "1367:188": "śubhena saṃvardhayate ca taṃ punaḥ||20||",
    "1367:189": "prāptānuttaravaśitvena dhyānena nirāmiṣeṇa ca nihatasarvāvamānābhilāṣeṇa paripācayati|",
    "1367:190": "buddhaśāsane parasyāvarjanādāvarjitasya ca kuśaladharmasaṃvardhanāt paripācayati|",
    "1367:191": "yādṛśyā prajñayā yathā sattvānparipācayati tadārabhya ślokaḥ|",
    "1367:192": "sa tattvabhāvārthanaye suniścitaḥ karoti sattvānsuvinīta saṃśayān|",
    "1367:193": "tataśca te tajjinaśāsanādarād vivardhayante svaparaṃ guṇaiḥ śubhaiḥ||21||",
    "1367:194": "sa bodhisattvastattvārthanaye cābhiprāyārthanaye ca suviniścitayā prajñayā paripācayati|",
    "1367:195": "kathaṃ paripācayati sattvānāṃ saṃśayavinayanāt|",
    "1367:196": "tataśca śāsanabahumānātteṣāmātmaparaguṇasaṃvardhakatvena|",
    "1367:197": "niya[ga]mena ślokaḥ|",
    "1367:198": "iti sugatigatau śubhatraye vā jagadakhilaṃ kṛpayā sa bodhisattvaḥ|",
    "1367:199": "tanuparamavimadhyamaprakārairvinayati lokasamānabhāvagatyā||22||",
    "1367:200": "anena yatra ca vinayati,",
    "1367:201": "sugatigamane yānatraye vā|",
    "1367:202": "yacca vinayati,",
    "1367:203": "jagadakhilam|",
    "1367:204": "yena ca vinayati, kṛpayā|",
    "1367:205": "yaśca vinayati bodhisattvaḥ|",
    "1367:206": "yādṛśaiśca paripācanaprakārai tanuparamavimadhyamaprakāraiḥ|",
    "1367:207": "yāvantaṃ ca kālaṃ,",
    "1367:208": "tatparidīpanāt samāsena paripākamāhātmyaṃ darśayati|",
    "1367:209": "tatra tanuḥ prakāro'dhimukticaryābhūmau bodhisattvasya paramo'ṣṭāmyādiṣu vimadhyamaḥ saptasu veditavyaḥ|",
    "1367:210": "yāvallokasya bhāvastatsamānayā gatyā atyantamityarthaḥ|",
    "1367:211": "|| mahāyānasūtrālaṃkāre paripākādhikāro'ṣṭamaḥ||"
}