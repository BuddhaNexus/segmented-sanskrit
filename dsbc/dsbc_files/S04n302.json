{
  "S04n302:0": "6 abhimukhī nāma ṣaṣṭhī bhūmiḥ |",
  "S04n302:1": "upakramagāthāḥ |",
  "S04n302:2": "caraṇavara śruṇitvā bhūmiśreṣṭhaṃ vidūnāṃ",
  "S04n302:3": "gagani sugataputrā harṣitāḥ puṣpavarṣī |",
  "S04n302:4": "maṇiratana udārā ābhayuktā viśuddhā",
  "S04n302:5": "abhikira sugatasya sādhviti vyāharantaḥ || 1 ||",
  "S04n302:6": "maruta śatasahasrā harṣitā antarīkṣe",
  "S04n302:7": "diviya rucira citrā ratnacūrṇā udārāḥ |",
  "S04n302:8": "abhikira sugatebhyo gandhamālyānulepān",
  "S04n302:9": "chatradhvajāpatākāhāracandrārdhahārān || 2 ||",
  "S04n302:10": "marupati vaśavartī sarvadevagaṇena",
  "S04n302:11": "upari khaga paṭhitvā megha ratnāmayāni |",
  "S04n302:12": "abhikiriṣu prasannaḥ pūjanārthaṃ jinasya",
  "S04n302:13": "sādhu sugataputrā vyāharī hṛṣṭacittāḥ || 3 ||",
  "S04n302:14": "amaravadhusahasrāṇyantarīkṣe sthitāni",
  "S04n302:15": "gīta ruta manojñā vādyasaṃgītiyuktā |",
  "S04n302:16": "sarvarutasvarebhyo eva śabdā ravante",
  "S04n302:17": "jina kṛtu sumanojñaiḥ kleśatāpasya hantā || 4 ||",
  "S04n302:18": "śūnya prakṛtiśāntā sarvadharmānimittāḥ",
  "S04n302:19": "khagapathasamatulyā nirvikalpā viśuddhāḥ |",
  "S04n302:20": "gatisthitivinirvṛttā niṣprapañcā aśeṣā",
  "S04n302:21": "tathatasama tathatvāddharmatā nirvikalpā || 5 ||",
  "S04n302:22": "yaiḥ punaranubuddhāḥ sarvadharmeva teṣāṃ",
  "S04n302:23": "bhāvi tatha abhāve iñjanā nāsti kācit |",
  "S04n302:24": "kṛpa karuṇa jage ca mocanārthaṃ prayuktā-",
  "S04n302:25": "ste hi sugataputrā aurasā dharmajātāḥ || 6 ||",
  "S04n302:26": "dānacari carante sarva hitvā nimittaṃ",
  "S04n302:27": "śīlasudhṛtacittāṃ ādiśāntā praśāntāḥ |",
  "S04n302:28": "jagati kṛta kṣamante akṣayā dharmajñānī",
  "S04n302:29": "viriyabalaupetāḥ sarvadharmāviviktāḥ || 7 ||",
  "S04n302:30": "dhyānanayapraviṣṭā jīrṇakleśā viśuddhāḥ",
  "S04n302:31": "sarvaviditavastū ādiśūnyādhimuktāḥ |",
  "S04n302:32": "jñānakriyabalāḍhyā nityayuktā jagārthaṃ",
  "S04n302:33": "te hi sugataputrāḥ śāntapāpā mahātmāḥ || 8 ||",
  "S04n302:34": "īdṛśā rutasahasra bhaṇitvā",
  "S04n302:35": "khe sthitāḥ sumadhurā surakanyāḥ |",
  "S04n302:36": "tūṣṇibhūta jinamīkṣi prasannā",
  "S04n302:37": "dharmagauravaratā marukanyāḥ || 9 ||",
  "S04n302:38": "vimukticandra abravīdvajragarbhaṃ viśāradam |",
  "S04n302:39": "kīdṛśākāraniṣpattiḥ pañcamāyāmanantaram || 10 ||",
  "S04n302:40": "upasaṃhāragāthāḥ |",
  "S04n302:41": "paripūrṇamārgacaraṇā vidu pañcamāyāṃ",
  "S04n302:42": "dharmānimittata alakṣaṇatā ajātā |",
  "S04n302:43": "anutpāda ādipariśuddhyatiniṣprapañcā",
  "S04n302:44": "bhāvetva jñānamati ṣaṣṭhi samākramanti || 11 ||",
  "S04n302:45": "dharmā vivikta apratigraha nirvikalpā",
  "S04n302:46": "māyāsvabhāva dvayabhāvatu viprayuktā |",
  "S04n302:47": "anulomayanta avilomanta dharmanetrī",
  "S04n302:48": "jñānānvitāḥ pravara ṣaṣṭhi samākramanti || 12 ||",
  "S04n302:49": "tīkṣṇānulomasthita jñānabalopapetāḥ",
  "S04n302:50": "samudāgamaṃ vibhavu prekṣiṣu sarvaloke |",
  "S04n302:51": "mohāndhakāraprabhavaṃ jagasaṃbhavātmā",
  "S04n302:52": "tasyaiva mohavigamena pravṛti nāsti || 13 ||",
  "S04n302:53": "vicinanti pratyayakṛtiṃ paramārthaśūnyāṃ",
  "S04n302:54": "kriya hetupratyayasamajña kriyāvirodhau |",
  "S04n302:55": "yāthāvataḥ karakapetakriyāṃ viditvā",
  "S04n302:56": "vicinanti saṃskṛta ghanābhrasamaṃ nirīham || 14 ||",
  "S04n302:57": "satyeṣu'jñānu paramārthatu sā avidyā",
  "S04n302:58": "karmā ca cetanabalena vibhāgaprāptam |",
  "S04n302:59": "cittaṃ niśritya sahajaṃ puna nāmarūpam",
  "S04n302:60": "evaṃmukhā bhavati yāva dukhasya skandhaḥ || 15 ||",
  "S04n302:61": "te cittamātra ti traidhātukamotaranti",
  "S04n302:62": "api cā bhavāṅga iti dvādaśa ekacitte |",
  "S04n302:63": "saṃrāgu jātu api cittu prabhāvitastu",
  "S04n302:64": "evaṃ ca saṃbhavakṣayaṃ puna cittabhāgam || 16 ||",
  "S04n302:65": "kāryaṃ avidyadvaya kurvati mohabhāve",
  "S04n302:66": "mohebhi hetu vahate puna cetanāyāḥ |",
  "S04n302:67": "evaṃ ca yāva jaradhvaṃsanaskandhabhedam",
  "S04n302:68": "anu sarva duḥkhaprabhavaṃ kṣayataḥ abhāvaḥ || 17 ||",
  "S04n302:69": "ucchedu no bhavati pratyayatāmavidyā",
  "S04n302:70": "nocchedyatāpi kara prahāya saṃnirodham |",
  "S04n302:71": "moho teṣu ca upādānaṃ kleśavartma",
  "S04n302:72": "karma bhavaṃ ca api cetana śeṣa duḥkhā || 18 ||",
  "S04n302:73": "mohaṃ tu āyatana saṃskṛtaduḥkha teṣāṃ",
  "S04n302:74": "sparśaṃ ca vedana sukhādukhatāya duḥkhā |",
  "S04n302:75": "śeṣānamaṅganapariṇāmaduḥkhavṛddhiḥ",
  "S04n302:76": "vyuccheda tasya duḥkhatā na hi ātmamasti || 19 ||",
  "S04n302:77": "adhveṣu pūrvaṃ tamacetanasaṃskṛtasya",
  "S04n302:78": "vijñāna vedana vivartati pratyutpannam",
  "S04n302:79": "aparāntu teṣu prabhavo dukhasaṃbhaveyam",
  "S04n302:80": "āpekṣa cchedu prasaraṃ ca nirīkṣayantaḥ || 20 ||",
  "S04n302:81": "mohasya pratyayatu saṃbhavate vibandhā",
  "S04n302:82": "vinibandhanavyayakṣaye sati pratyayānām |",
  "S04n302:83": "hetośca mūlaprabhavaṃ na tu hetubhedaṃ",
  "S04n302:84": "vyuparīkṣate ca jina jñāna svabhāvaśūnyam || 21 ||",
  "S04n302:85": "anuloma mohaprabhavaṃ ca prabhāvataśca",
  "S04n302:86": "pratilomahetu kṣayato bhava sarvacchedyam |",
  "S04n302:87": "gambhīrapratyayatamasya sato'sataśca",
  "S04n302:88": "vyuparīkṣate daśavidhaṃ aniketabuddhiḥ || 22 ||",
  "S04n302:89": "saṃdhī bhavāṅgatu tathāpi ca karmasthānam",
  "S04n302:90": "avibhāgatastrividhu vartmani pūrvataśca |",
  "S04n302:91": "triyahetu duḥkhavibhavā udaya vyayaṃ ca",
  "S04n302:92": "abhāvato'kṣayata pratyaya ānulomam || 23 ||",
  "S04n302:93": "evaṃ pratītyasamutpāda samotaranti",
  "S04n302:94": "māyopamaṃ vitatha vedakarmāpanītam |",
  "S04n302:95": "svapnopamaṃ ca tathatā pratibhāsa caiva",
  "S04n302:96": "bālāna mohana marīcisamasvabhāvam || 24 ||",
  "S04n302:97": "yā eva bhāvana sa śūnyata paṇḍitānāṃ",
  "S04n302:98": "rati pratyayāna bhavate idamānimittam |",
  "S04n302:99": "jānitva jātu vitathaṃ praṇidhātu nāsti",
  "S04n302:100": "anyatra sattvakṛpayā upapadyanti || 25 ||",
  "S04n302:101": "evaṃ vimokṣamukha bhāvayi te mahātmā",
  "S04n302:102": "kṛpabuddhi bhūya tatha buddhaguṇābhilāṣī |",
  "S04n302:103": "saṃyogasaṃskṛtikṛta vyuparīkṣamāṇo",
  "S04n302:104": "niyatāśayo bhavati naikaguṇopapetaḥ || 26 ||",
  "S04n302:105": "pūrṇā sahasra daśa śūnyataye samādhī",
  "S04n302:106": "tatha ānimittavaradaṃ ca vimokṣa tāyī || 27 ||",
  "S04n302:107": "pralhādayanti jagadāśaya candraābhā",
  "S04n302:108": "vahamānu vāta caturo asaṃhāryaprāptā |",
  "S04n302:109": "atikramya mārapathamābha jinaurasānāṃ",
  "S04n302:110": "praśamenti kleśaparitāpa dukhārditānām || 28 ||",
  "S04n302:111": "iha bhūmideśupagatā marutādhipāste",
  "S04n302:112": "bhontī sunirmita kṛtāvadhimānaghātī |",
  "S04n302:113": "yaṃ caiva ārabhiṣu jñānapathopapetā",
  "S04n302:114": "asaṃhārya śrāvakagatī atikrānta dhīrāḥ || 29 ||",
  "S04n302:115": "ākāṅkṣamāṇu sugatātmaja vīryaprāptāḥ",
  "S04n302:116": "koṭīśatasahasrapūrṇa samādhi labdhāḥ |",
  "S04n302:117": "paśyanti ekakṣaṇi buddha daśaddiśāsu",
  "S04n302:118": "pratapanti sūrya eva madhyagu grīṣmakāle || 30 ||",
  "S04n302:119": "gambhīra durdṛśā sūkṣma durjñeyā jinaśrāvakaiḥ |",
  "S04n302:120": "ṣaṣṭhī bhūmirmahātmānāmākhyātā sugatātmajāḥ || 31 ||"
}