{
  "SA07n926:0": "CANTO XII",
  "SA07n926:1": "tataḥ śamavihārasya",
  "SA07n926:2": "munerikṣvākucandramāḥ |",
  "SA07n926:3": "arāḍasyāśramaṃ bheje",
  "SA07n926:4": "vapuṣā pūrayanniva ||1 ||",
  "SA07n926:5": "sa kālāmasagotreṇa",
  "SA07n926:6": "tenālokyaiva dūrataḥ |",
  "SA07n926:7": "uccaiḥ svāgatamityuktaḥ",
  "SA07n926:8": "samīpamupajagmivān ||2 ||",
  "SA07n926:9": "tāvubhau nyāyataḥ pṛṣṭvā",
  "SA07n926:10": "dhātusāmyaṃ parasparam |",
  "SA07n926:11": "dāravyormedhyayorvṛṣyoḥ",
  "SA07n926:12": "śucau deśe niṣedatuḥ ||3 ||",
  "SA07n926:13": "tamāsīnaṃ nṛpasutaṃ",
  "SA07n926:14": "so'bravīnmunisattamaḥ |",
  "SA07n926:15": "bahumānaviśālābhyāṃ",
  "SA07n926:16": "darśanābhyāṃ pibanniva ||4 ||",
  "SA07n926:17": "viditaṃ me yathā saumya",
  "SA07n926:18": "niṣkrānto bhavanādasi |",
  "SA07n926:19": "chittvā snehamayaṃ pāśaṃ",
  "SA07n926:20": "pāśaṃ dṛpta iva dvipaḥ ||5 ||",
  "SA07n926:21": "sarvathā dhṛtimaccaiva",
  "SA07n926:22": "prājñaṃ caiva manastava |",
  "SA07n926:23": "yastvaṃ prāptaḥ śriyaṃ tyaktvā",
  "SA07n926:24": "latāṃ viṣaphalāmiva ||6 ||",
  "SA07n926:25": "nāścarya jīrṇavayaso",
  "SA07n926:26": "yajjagmuḥ pārthivā vanam |",
  "SA07n926:27": "apatyebhyaḥ śriyaṃ dattvā",
  "SA07n926:28": "bhuktocchiṣṭāmiva srajam ||7 ||",
  "SA07n926:29": "idaṃ me matamāścaryaṃ",
  "SA07n926:30": "nave vayasi yadbhavān |",
  "SA07n926:31": "abhuktvaiva śriyaṃ prāptaḥ",
  "SA07n926:32": "sthito viṣayagocare ||8 ||",
  "SA07n926:33": "tadvijñātumimaṃ dharma",
  "SA07n926:34": "paramaṃ bhājanaṃ bhavān |",
  "SA07n926:35": "jñānaplamavadhiṣṭhāya",
  "SA07n926:36": "śīghraṃ duḥkhārṇavaṃ tara ||9 ||",
  "SA07n926:37": "śiṣye yadyapi vijñāte",
  "SA07n926:38": "śāstraṃ kālena varṇyate |",
  "SA07n926:39": "gāmbhīryādvyavasāyācca",
  "SA07n926:40": "na parīkṣyo bhavānmama ||10 ||",
  "SA07n926:41": "iti vākyamarāḍasya",
  "SA07n926:42": "vijñāya sa nararṣabhaḥ |",
  "SA07n926:43": "babhūva paramaprītaḥ",
  "SA07n926:44": "provācottarameva ca ||11 ||",
  "SA07n926:45": "viraktasyāpi yadidaṃ",
  "SA07n926:46": "saumukhyaṃ bhavataḥ param |",
  "SA07n926:47": "akṛtārtho'pyanenāsmi",
  "SA07n926:48": "kṛtārtha iva saṃprati ||12 ||",
  "SA07n926:49": "didṛkṣuriva hi jyoti-",
  "SA07n926:50": "ryiyāsuriva daiśikam |",
  "SA07n926:51": "tvaddarśanamahaṃ manye",
  "SA07n926:52": "titīrṣuriva ca plavam ||13 ||",
  "SA07n926:53": "tasmādarhasi tadvaktuṃ",
  "SA07n926:54": "vaktavyaṃ yadi manyase |",
  "SA07n926:55": "jarāmaraṇarogebhyo",
  "SA07n926:56": "yathāyaṃ parimucyate ||14 ||",
  "SA07n926:57": "ityarāḍaḥ kumārasya",
  "SA07n926:58": "māhātmyādeva coditaḥ |",
  "SA07n926:59": "saṃkṣiptaṃ kathayāṃcakre",
  "SA07n926:60": "svasya śāstrasya niścayam ||15 ||",
  "SA07n926:61": "śrūyatāmayamasmākaṃ",
  "SA07n926:62": "siddhāntaḥ śṛṇvatāṃ vara |",
  "SA07n926:63": "yathā bhavati saṃsāro",
  "SA07n926:64": "yathā caiva nivartate ||16 ||",
  "SA07n926:65": "prakṛtiśca vikāraśca",
  "SA07n926:66": "janma mṛtyurjareva ca |",
  "SA07n926:67": "tattāvatsattvamituktaṃ",
  "SA07n926:68": "sthirasattva parehi tat ||17 ||",
  "SA07n926:69": "tatra tu prakṛtiṃ nāma",
  "SA07n926:70": "viddhiṃ prakṛtikovida |",
  "SA07n926:71": "pañca bhūtānyahaṃkāraṃ",
  "SA07n926:72": "buddhimavyaktameva ca ||18 ||",
  "SA07n926:73": "vikāra iti budhyasva",
  "SA07n926:74": "viṣayānindriyāṇi ca |",
  "SA07n926:75": "pāṇipādaṃ ca vādaṃ ca",
  "SA07n926:76": "pāyūpasthaṃ tathā manaḥ ||19 ||",
  "SA07n926:77": "asya kṣetrasya vijñānā-",
  "SA07n926:78": "tkṣetrajña iti saṃjñi ca |",
  "SA07n926:79": "kṣetrajña iti cātmānaṃ",
  "SA07n926:80": "kathayantyātmacintakāḥ ||20 ||",
  "SA07n926:81": "saśiṣyaḥ kapilaśceha",
  "SA07n926:82": "pratibuddha iti smṛtiḥ |",
  "SA07n926:83": "saputro'pratibuddhastu",
  "SA07n926:84": "prajāpatirihocyate ||21 ||",
  "SA07n926:85": "jāyate jīryate caiva",
  "SA07n926:86": "bādhyate mriyate ca yat |",
  "SA07n926:87": "tadvyaktamiti vijñeya-",
  "SA07n926:88": "mavyaktaṃ tu viparyayāt ||22 ||",
  "SA07n926:89": "ajñānaṃ karma tṛṣṇā ca",
  "SA07n926:90": "jñeyāḥ saṃsārahetavaḥ |",
  "SA07n926:91": "sthito'smiṃstritaye jantu-",
  "SA07n926:92": "statsattvaṃ nātivartate ||23 ||",
  "SA07n926:93": "vipratyayādahaṃkārā-",
  "SA07n926:94": "tsaṃdehādabhisaṃplavāt |",
  "SA07n926:95": "aviśeṣānupāyābhyāṃ",
  "SA07n926:96": "saṅgādabhyavapātataḥ ||24 ||",
  "SA07n926:97": "tatra vipratyayo nāma",
  "SA07n926:98": "viparītaṃ pravartate |",
  "SA07n926:99": "anyathā kurute kāryaṃ",
  "SA07n926:100": "mantavyaṃ manyate'nyathā ||25 ||",
  "SA07n926:101": "bravīmyahamahaṃ vedmi",
  "SA07n926:102": "gacchāmyahamahaṃ sthitaḥ |",
  "SA07n926:103": "itīhaivamahaṃkāra-",
  "SA07n926:104": "stvanahaṃkāra vartate ||26 ||",
  "SA07n926:105": "yastu bhāvānasaṃdigdhā-",
  "SA07n926:106": "nekībhāvena paśyati |",
  "SA07n926:107": "mṛtpiṇḍavadasaṃdeha",
  "SA07n926:108": "saṃdehaḥ sa ihocyate ||27 ||",
  "SA07n926:109": "ya evāhaṃ sa evedaṃ",
  "SA07n926:110": "mano buddhiśca karma ca |",
  "SA07n926:111": "yaścaivaiṣa gaṇaḥ so'ha-",
  "SA07n926:112": "miti yaḥ so'bhisaṃplavaḥ ||28 ||",
  "SA07n926:113": "aviśeṣaṃ viśeṣajña",
  "SA07n926:114": "pratibuddhāprabuddhayoḥ |",
  "SA07n926:115": "prakṛtīnāṃ ca yo veda",
  "SA07n926:116": "so'viśeṣa iti smṛtaḥ ||29 ||",
  "SA07n926:117": "namaskāravaṣaṭkārau",
  "SA07n926:118": "prokṣaṇābhyukṣaṇādayaḥ |",
  "SA07n926:119": "anupāya iti prājñai-",
  "SA07n926:120": "rupāyajña praveditaḥ ||30 ||",
  "SA07n926:121": "sajjate yena durmedhā",
  "SA07n926:122": "manovāgbuddhikarmabhiḥ |",
  "SA07n926:123": "viṣayeṣvanabhiṣvaṅga",
  "SA07n926:124": "so'bhiṣvaṅga iti smṛtaḥ ||31 ||",
  "SA07n926:125": "mamedamahamasyeti",
  "SA07n926:126": "yadduḥkhamabhimanyate |",
  "SA07n926:127": "vijñeyo'bhyavapātaḥ sa",
  "SA07n926:128": "saṃsāre yena pātyate ||32 ||",
  "SA07n926:129": "ityavidyāṃ hi vidvānsa",
  "SA07n926:130": "pañcaparvā samīhate |",
  "SA07n926:131": "tamo mohaṃ mahāmohaṃ",
  "SA07n926:132": "tāmisradvayameva ca ||33 ||",
  "SA07n926:133": "tatrālasyaṃ tamo viddhi",
  "SA07n926:134": "mohaṃ mṛtyuṃ ca janma ca |",
  "SA07n926:135": "mahāmohastvasaṃmoha",
  "SA07n926:136": "kāma ityeva gamyatām ||34 ||",
  "SA07n926:137": "yasmādatra ca bhūtāni",
  "SA07n926:138": "pramuhyanti mahāntyapi |",
  "SA07n926:139": "tasmādeṣa mahābāho",
  "SA07n926:140": "mahāmoha iti smṛtaḥ ||35 ||",
  "SA07n926:141": "tāmisramiti cākrodha",
  "SA07n926:142": "krodhamevādhikurvate |",
  "SA07n926:143": "viṣādaṃ cāndhatāmisra-",
  "SA07n926:144": "maviṣāda pracakṣate ||36 ||",
  "SA07n926:145": "anayāvidyayā bālaḥ",
  "SA07n926:146": "saṃyuktaḥ pañcaparvayā |",
  "SA07n926:147": "saṃsāre duḥkhabhūyiṣṭhe",
  "SA07n926:148": "janmasvabhiniṣicyate ||37 ||",
  "SA07n926:149": "draṣṭā śrotā ca mantā ca",
  "SA07n926:150": "kāryakaraṇameva ca |",
  "SA07n926:151": "ahamityevamāgamya",
  "SA07n926:152": "saṃsāre parivartate ||38 ||",
  "SA07n926:153": "ihaibhirhetubhirdhīman",
  "SA07n926:154": "janmastrotaḥ pravartate |",
  "SA07n926:155": "hetvabhāvātphalābhāva",
  "SA07n926:156": "iti vijñātumarhasi ||39 ||",
  "SA07n926:157": "tatra samyaṅmatirvidyā-",
  "SA07n926:158": "nmokṣakāma catuṣṭayam |",
  "SA07n926:159": "pratibuddhāprabuddhau ca",
  "SA07n926:160": "vyaktamavyaktameva ca ||40 ||",
  "SA07n926:161": "yathāvadetadvijñāya",
  "SA07n926:162": "kṣetrajño hi catuṣṭayam |",
  "SA07n926:163": "ājavaṃjavatāṃ hitvā",
  "SA07n926:164": "prāpnoti padamakṣaram ||41 ||",
  "SA07n926:165": "ityartha brāhmaṇā loke",
  "SA07n926:166": "paramabrahmavādinaḥ |",
  "SA07n926:167": "brahmacarya carantīha",
  "SA07n926:168": "brāhmaṇānvāsayanti ca ||42 ||",
  "SA07n926:169": "iti vākyamidaṃ śrutvā",
  "SA07n926:170": "munestasya nṛpātmajaḥ |",
  "SA07n926:171": "abhyupāyaṃ ca papraccha",
  "SA07n926:172": "padameva ca naiṣṭhikam ||43 ||",
  "SA07n926:173": "brahmacaryamidaṃ caryaṃ",
  "SA07n926:174": "yathā yāvacca yatra ca |",
  "SA07n926:175": "dharmasyāsya ca paryantaṃ",
  "SA07n926:176": "bhavānvyākhyātumarhati ||44 ||",
  "SA07n926:177": "ityarāḍo yathāśāstraṃ",
  "SA07n926:178": "vispaṣṭārtha samāsataḥ |",
  "SA07n926:179": "tamevānyena kalpena",
  "SA07n926:180": "dharmamasmai vyabhāṣata ||45 ||",
  "SA07n926:181": "ayamādau gṛhānmuktvā",
  "SA07n926:182": "bhaikṣākaṃ liṅgamāśritaḥ |",
  "SA07n926:183": "samudācāravistīrṇa",
  "SA07n926:184": "śīlamādāya vartate ||46 ||",
  "SA07n926:185": "saṃtoṣaṃ paramāsthāya",
  "SA07n926:186": "yena tena yatastataḥ |",
  "SA07n926:187": "viviktaṃ sevate vāsaṃ",
  "SA07n926:188": "nirdvandvaḥ śāstravitkṛtī ||47 ||",
  "SA07n926:189": "tato rāgādbhayaṃ dṛṣṭvā",
  "SA07n926:190": "vairāgyācca paraṃ śivam |",
  "SA07n926:191": "nigṛhṇannindriyagrāmaṃ",
  "SA07n926:192": "yatate manasaḥ śame ||48 ||",
  "SA07n926:193": "atho viviktaṃ kāmebhyo",
  "SA07n926:194": "vyāpādādibhya eva ca |",
  "SA07n926:195": "vivekajamavāpnoti",
  "SA07n926:196": "pūrvadhyānaṃ vitarkavat ||49 ||",
  "SA07n926:197": "tacca dhyānasukhaṃ prāpya",
  "SA07n926:198": "tattadeva vitarkayān |",
  "SA07n926:199": "apūrvasukhalābhena",
  "SA07n926:200": "hriyate bāliśo janaḥ ||50 ||",
  "SA07n926:201": "śamenaivaṃvidhenāyaṃ",
  "SA07n926:202": "kāmadveṣavigarhiṇā |",
  "SA07n926:203": "brahmalokamavāpnoti",
  "SA07n926:204": "paritoṣeṇa vañcitaḥ ||51 ||",
  "SA07n926:205": "jñātvā vidvānvitarkāstu",
  "SA07n926:206": "manaḥsaṃkṣobhakārakān |",
  "SA07n926:207": "tadviyuktamavāpnoti",
  "SA07n926:208": "dhyānaṃ prītisukhānvitam ||52 ||",
  "SA07n926:209": "hriyamāṇastayā prītyā",
  "SA07n926:210": "yo viśeṣaṃ na paśyati |",
  "SA07n926:211": "sthānaṃ bhāsvaramāpnoti",
  "SA07n926:212": "deveṣvābhāsvareṣu saḥ ||53 ||",
  "SA07n926:213": "yastu prītisukhāttasmā-",
  "SA07n926:214": "dvivecayati mānasam |",
  "SA07n926:215": "tṛtīyaṃ labhate dhyānaṃ",
  "SA07n926:216": "sukhaṃ prītivivarjitam ||54 ||",
  "SA07n926:217": "yastu tasminsukhe magno",
  "SA07n926:218": "na viśeṣāya yatnavān |",
  "SA07n926:219": "śubhakṛtsnaiḥ sa sāmānyaṃ",
  "SA07n926:220": "sukhaṃ prāpnoti daivataiḥ ||55 ||",
  "SA07n926:221": "tādṛśaṃ sukhāmāsādya",
  "SA07n926:222": "yo na rajyatyupekṣakaḥ",
  "SA07n926:223": "caturtha dhyānamāpnoti",
  "SA07n926:224": "sukhaduḥkhavivarjitam ||56 ||",
  "SA07n926:225": "tatra kecidvyavasyanti",
  "SA07n926:226": "mokṣa ityabhimāninaḥ |",
  "SA07n926:227": "sukhaduḥkhaparityāgā-",
  "SA07n926:228": "davyāpārācca cetasaḥ ||57 ||",
  "SA07n926:229": "asya dhyānasya tu phalaṃ",
  "SA07n926:230": "samaṃ devairbṛhatphalaiḥ |",
  "SA07n926:231": "kathayanti bṛhatkālaṃ",
  "SA07n926:232": "bṛhatprajñāparīkṣakāḥ ||58 ||",
  "SA07n926:233": "samādhervyutthitastasmād",
  "SA07n926:234": "dṛṣtvā doṣāṃścharīriṇām |",
  "SA07n926:235": "jñānamārohati prājñaḥ",
  "SA07n926:236": "śarīravinivṛttaye ||59 ||",
  "SA07n926:237": "tatastaddhyānamutsṛjya",
  "SA07n926:238": "viśeṣe kṛtaniścayaḥ |",
  "SA07n926:239": "kāmebhya iva sa prājño",
  "SA07n926:240": "rūpādapi virajyate ||60 ||",
  "SA07n926:241": "śarīre khāni yānyasmi-",
  "SA07n926:242": "ntānyādau parikalpayan |",
  "SA07n926:243": "ghaneṣvapi tato dravye-",
  "SA07n926:244": "ṣvākāśamadhimucyate ||61 ||",
  "SA07n926:245": "ākāśagatamātmānaṃ",
  "SA07n926:246": "saṃkṣipya tvaparo budhaḥ |",
  "SA07n926:247": "tadevānantataḥ paśya-",
  "SA07n926:248": "nviśeṣamadhigacchati ||62 ||",
  "SA07n926:249": "adhyātmakuśalastvanyo",
  "SA07n926:250": "nivartyātmānamātmanā |",
  "SA07n926:251": "kiṃcinnāstīti saṃpaśya-",
  "SA07n926:252": "nnākiṃcanya iti smṛtaḥ ||63 ||",
  "SA07n926:253": "tato muñjādiṣīkeva",
  "SA07n926:254": "śakuniḥ pañjarādiva |",
  "SA07n926:255": "kṣetrajño niḥsṛto dehā-",
  "SA07n926:256": "nmukta ityabhidhīyate ||64 ||",
  "SA07n926:257": "etattatparamaṃ brahma",
  "SA07n926:258": "nirliṅga dhruvamakṣaram |",
  "SA07n926:259": "yanmokṣa iti tattvajñāḥ",
  "SA07n926:260": "kathayanti manīṣiṇaḥ ||65 ||",
  "SA07n926:261": "ityupāyaṃśca mokṣaśca",
  "SA07n926:262": "mayā saṃdarśitastava |",
  "SA07n926:263": "yadi jñātaṃ yadi ruci-",
  "SA07n926:264": "ryathāvatpratipadyatām ||66 ||",
  "SA07n926:265": "jaigīṣavyo'tha janako",
  "SA07n926:266": "vṛddhaścaiva parāśaraḥ |",
  "SA07n926:267": "imaṃ panthānamāsādya",
  "SA07n926:268": "muktā hyanye ca mokṣiṇaḥ ||67 ||",
  "SA07n926:269": "iti tasya sa tadvākyaṃ",
  "SA07n926:270": "gṛhītvā tu vicārya ca |",
  "SA07n926:271": "pūrvahetubalaprāptaḥ",
  "SA07n926:272": "pratyuttaramuvāca ha ||68 ||",
  "SA07n926:273": "śrutaṃ jñānamidaṃ sūkṣmaṃ",
  "SA07n926:274": "parataḥ parataḥ śivam |",
  "SA07n926:275": "kṣetrajñasyāparityāgā-",
  "SA07n926:276": "davaimyetadanaiṣṭhikam ||69 ||",
  "SA07n926:277": "vikāraprakṛtibhyo hi",
  "SA07n926:278": "kṣetrajñaṃ muktamapyaham |",
  "SA07n926:279": "manye prasavadharmāṇaṃ",
  "SA07n926:280": "bījadharmāṇameva ca ||70 ||",
  "SA07n926:281": "viśuddho yadyapi hyātmā",
  "SA07n926:282": "nirmukta iti kalpyate |",
  "SA07n926:283": "bhūyaḥ pratyayasadbhāvā-",
  "SA07n926:284": "damuktaḥ sa bhaviṣyati ||71 ||",
  "SA07n926:285": "ṛtubhūmyambuvirahā-",
  "SA07n926:286": "dyathā bījaṃ na rohati |",
  "SA07n926:287": "rohati pratyayaistaistai-",
  "SA07n926:288": "stadvatso'pi mato mama ||72 ||",
  "SA07n926:289": "yatkarmājñānatṛṣṇānāṃ",
  "SA07n926:290": "tyāgānmokṣaśca kalpyate |",
  "SA07n926:291": "atyantastatparityāgaḥ",
  "SA07n926:292": "satyātmani na vidyate ||73 ||",
  "SA07n926:293": "hitvā hitvā trayamidaṃ",
  "SA07n926:294": "viśeṣastūpalabhyate |",
  "SA07n926:295": "ātmanastu sthitiryatra",
  "SA07n926:296": "tatra sūkṣmamidaṃ trayam ||74 ||",
  "SA07n926:297": "sūkṣmatvāccaiva doṣāṇā-",
  "SA07n926:298": "mavyāpārācca cetasaḥ |",
  "SA07n926:299": "dīrghatvādāyuṣaścaiva",
  "SA07n926:300": "mokṣastu parikalpyate ||75 ||",
  "SA07n926:301": "ahaṃkāraparityāgo",
  "SA07n926:302": "yaścaiṣa parikalpyate |",
  "SA07n926:303": "satyātmani parityāgo",
  "SA07n926:304": "nāhaṃkārasya vidyate ||76 ||",
  "SA07n926:305": "saṃkhyādibhiramuktaśca",
  "SA07n926:306": "nirguṇo na bhavatyayam |",
  "SA07n926:307": "tasmādasati nairguṇye",
  "SA07n926:308": "nāsya mokṣo'bhidhīyate ||77 ||",
  "SA07n926:309": "guṇino hi guṇānāṃ ca",
  "SA07n926:310": "vyatireko na vidyate |",
  "SA07n926:311": "rūpoṣṇābhyāṃ virahito",
  "SA07n926:312": "na hyagnirupalabhyate ||78 ||",
  "SA07n926:313": "prāgdehānna bhaveddehī",
  "SA07n926:314": "prāgguṇebhyastathā guṇī |",
  "SA07n926:315": "tasmādādau vimuktaḥ san",
  "SA07n926:316": "śarīrī badhyate punaḥ ||79 ||",
  "SA07n926:317": "kṣetrajño viśarīraśca",
  "SA07n926:318": "jño vā syādajña eva vā |",
  "SA07n926:319": "yadi jño jñeyamasyāsti",
  "SA07n926:320": "jñeye sati na mucyate ||80 ||",
  "SA07n926:321": "athājña iti siddho vaḥ",
  "SA07n926:322": "kalpitena kimātmanā |",
  "SA07n926:323": "vināpi hyātmanājñānaṃ",
  "SA07n926:324": "prasiddhaṃ kāṣṭhakuḍyavat ||81 ||",
  "SA07n926:325": "parataḥ paratastyāgo",
  "SA07n926:326": "yasmāttu guṇavān smṛtaḥ |",
  "SA07n926:327": "tasmātsarvaparityāgā-",
  "SA07n926:328": "nmanye kṛtsnāṃ kṛtārthatām ||82 ||",
  "SA07n926:329": "iti dharmamarāḍasya",
  "SA07n926:330": "viditvā na tutoṣa saḥ |",
  "SA07n926:331": "akṛtsnamiti vijñāya",
  "SA07n926:332": "tataḥ pratijagāma ha ||83 ||",
  "SA07n926:333": "viśeṣamatha śuśrūṣu-",
  "SA07n926:334": "rudrakasyāśramaṃ yayau |",
  "SA07n926:335": "ātmagrāhācca tasyāpi",
  "SA07n926:336": "jagṛhe na sa darśanam ||84 ||",
  "SA07n926:337": "saṃjñāsaṃjñitvayordoṣaṃ",
  "SA07n926:338": "jñātvā hi munirudrakaḥ |",
  "SA07n926:339": "ākiṃcanyātparaṃ lebhe-",
  "SA07n926:340": "'saṃjñāsaṃjñātmikāṃ gatim ||85 ||",
  "SA07n926:341": "yasmāccālambane sūkṣme",
  "SA07n926:342": "saṃjñāsaṃjñe tataḥ param |",
  "SA07n926:343": "nāsaṃjñī naiva saṃjñīti",
  "SA07n926:344": "tasmāttatragataspṛhaḥ ||86 ||",
  "SA07n926:345": "yataśca buddhistatraiva",
  "SA07n926:346": "sthitānyatrāpracāriṇī |",
  "SA07n926:347": "sūkṣmāpaṭvī tatastatra",
  "SA07n926:348": "nāsaṃjñitvaṃ na saṃjñitā ||87 ||",
  "SA07n926:349": "yasmācca tadapi prāpya",
  "SA07n926:350": "punarāvartate jagat |",
  "SA07n926:351": "bodhisattvaḥ paraṃ prepsu-",
  "SA07n926:352": "stasmādudrakamatyajat ||88 ||",
  "SA07n926:353": "tato hitvāśramaṃ tasya",
  "SA07n926:354": "śreyo'rthī kṛtaniścayaḥ |",
  "SA07n926:355": "bheje gayasya rājarṣe-",
  "SA07n926:356": "rnagarīsaṃjñamāśramam ||89 ||",
  "SA07n926:357": "atha nairañjanātīre",
  "SA07n926:358": "śucau śuciparākramaḥ |",
  "SA07n926:359": "cakāra vāsamekānta-",
  "SA07n926:360": "vihārābhiratirmuniḥ ||90 ||",
  "SA07n926:361": "āgatān tatra tatpūrva",
  "SA07n926:362": "pañcendriyavaśoddhatān |",
  "SA07n926:363": "tapaḥpravṛttān vratino",
  "SA07n926:364": "bhikṣūn pañca niraikṣata ||91 ||",
  "SA07n926:365": "te copatastthurdṛṣṭvātra",
  "SA07n926:366": "bhikṣavastaṃ mumukṣavaḥ |",
  "SA07n926:367": "puṇyārjitadhanārogya-",
  "SA07n926:368": "mindriyārthā iveśvaram ||92 ||",
  "SA07n926:369": "saṃpūjyamānastaiḥ pravhai-",
  "SA07n926:370": "rvinayādanuvartibhiḥ |",
  "SA07n926:371": "tadvaśasthāyibhiḥ śiṣyai-",
  "SA07n926:372": "rlolairmana ivendriyaiḥ ||93 ||",
  "SA07n926:373": "mṛtyujanmāntakaraṇe",
  "SA07n926:374": "syādupāyo'yamityatha |",
  "SA07n926:375": "duṣkarāṇi samārebhe",
  "SA07n926:376": "tapāṃsyanaśanena saḥ ||94 ||",
  "SA07n926:377": "upavāsavidhīnnaikān",
  "SA07n926:378": "kurvannaradurācarān |",
  "SA07n926:379": "varṣāṇi ṣaṭ śamaprepsu-",
  "SA07n926:380": "rakarotkārśyamātmanaḥ ||95 ||",
  "SA07n926:381": "annakāleṣu caikaikaiḥ",
  "SA07n926:382": "sa kolatilataṇḍulaiḥ |",
  "SA07n926:383": "apārapārasaṃsāra-",
  "SA07n926:384": "pāraṃ prepsurapārayat ||96 ||",
  "SA07n926:385": "dehādapacayastena",
  "SA07n926:386": "tapasā tasya yaḥ kṛtaḥ |",
  "SA07n926:387": "sa evopacayo bhūya-",
  "SA07n926:388": "stejasāsya kṛto'bhavat ||97 ||",
  "SA07n926:389": "kṛśo'pyakṛśakīrtiśrī-",
  "SA07n926:390": "rlhādaṃ cakre'nyacakṣuṣām |",
  "SA07n926:391": "kumudānāmiva śara-",
  "SA07n926:392": "cchuklapakṣādicandramāḥ ||98 ||",
  "SA07n926:393": "tvagasthiśeṣo niḥśeṣai-",
  "SA07n926:394": "rmedaḥpiśitaśoṇitaiḥ |",
  "SA07n926:395": "kṣīṇo'pyakṣīṇagāmbhīryaḥ",
  "SA07n926:396": "samudra iva sa vyabhāt ||99 ||",
  "SA07n926:397": "atha kaṣṭatapaḥspaṣṭa-",
  "SA07n926:398": "vyarthakliṣṭatanurmuniḥ |",
  "SA07n926:399": "bhavabhīrurimāṃ cakre",
  "SA07n926:400": "buddhiṃ buddhatvakāṅkṣayā ||100 ||",
  "SA07n926:401": "nāyaṃ dharmo virāgāya",
  "SA07n926:402": "na bodhāya na muktaye |",
  "SA07n926:403": "jambumūle mayā prāpto",
  "SA07n926:404": "yastadā sa vidhirdhruvaḥ ||101 ||",
  "SA07n926:405": "na cāsau durbalenāptuṃ",
  "SA07n926:406": "śakyamityāgatādaraḥ |",
  "SA07n926:407": "śarīrabalavṛddhyartha-",
  "SA07n926:408": "midaṃ bhūyo'nvacintayat ||102 ||",
  "SA07n926:409": "kṣutpipāsāśramaklāntaḥ",
  "SA07n926:410": "śramādasvasthamānasaḥ |",
  "SA07n926:411": "prāpnuyānmanasāvāpyaṃ",
  "SA07n926:412": "phalaṃ kathamanirvṛtaḥ ||103 ||",
  "SA07n926:413": "nirvṛtiḥ prāpyate samyak",
  "SA07n926:414": "satatendriyatarpaṇāt |",
  "SA07n926:415": "saṃtarpitendriyatayā",
  "SA07n926:416": "manaḥsvāsthyamavāpyate ||104 ||",
  "SA07n926:417": "svasthaprasannamanasaḥ",
  "SA07n926:418": "samādhirupapadyate |",
  "SA07n926:419": "samādhiyuktacittasya",
  "SA07n926:420": "dhyānayogaḥ pravartate ||105 ||",
  "SA07n926:421": "dhyānapravartanāddharmāḥ",
  "SA07n926:422": "prāpyante yairavāpyate |",
  "SA07n926:423": "durlabhaṃ śāntamajaraṃ",
  "SA07n926:424": "paraṃ tadamṛtaṃ padam ||106 ||",
  "SA07n926:425": "tasmādāhāramūlo'ya-",
  "SA07n926:426": "mupāya itiniścayaḥ |",
  "SA07n926:427": "āhārakaraṇe dhīraḥ",
  "SA07n926:428": "kṛtvāmitamatirmatim ||107 ||",
  "SA07n926:429": "snāto nairañjanātīrā-",
  "SA07n926:430": "duttatāra śanaiḥ kṛśaḥ |",
  "SA07n926:431": "bhaktyāvanataśākhāgrai-",
  "SA07n926:432": "rdattahastastaṭadrumaiḥ ||108 ||",
  "SA07n926:433": "atha gopādhipasutā",
  "SA07n926:434": "daivatairabhicoditā |",
  "SA07n926:435": "udbhutahṛdayānandā",
  "SA07n926:436": "tatra nandabalāgamat ||109 ||",
  "SA07n926:437": "sitaśaṅkhojjvalabhujā",
  "SA07n926:438": "nīlakambalavāsinī |",
  "SA07n926:439": "saphenamālānīlāmbu-",
  "SA07n926:440": "ryamuneva saridvarā ||110 ||",
  "SA07n926:441": "sā śraddhāvardhitaprīti-",
  "SA07n926:442": "rvikasallocanotpalā |",
  "SA07n926:443": "śirasā praṇipatyainaṃ",
  "SA07n926:444": "grāhayāmāsa pāyasam ||111 ||",
  "SA07n926:445": "kṛtvā tadupabhogena",
  "SA07n926:446": "prāptajanmaphalāṃ sa tām |",
  "SA07n926:447": "bodhiprāptau samartho'bhū-",
  "SA07n926:448": "tsaṃtarpitaṣaḍindriyaḥ ||112 ||",
  "SA07n926:449": "paryāptāpyānamūrtiśca",
  "SA07n926:450": "sārdha svayaśasā muniḥ |",
  "SA07n926:451": "kāntidhairye babhāraikaḥ",
  "SA07n926:452": "śaśāṅkārṇavayordvayoḥ ||113 ||",
  "SA07n926:453": "āvṛtta iti vijñāya",
  "SA07n926:454": "taṃ jahuḥ pañca bhikṣavaḥ |",
  "SA07n926:455": "manīṣiṇamivātmānaṃ",
  "SA07n926:456": "nirmuktaṃ pañca dhātavaḥ ||114 ||",
  "SA07n926:457": "vyavasāyadvitīyo'tha",
  "SA07n926:458": "śādvalāstīrṇabhūtalam |",
  "SA07n926:459": "so'śvatthamūlaṃ prayayau",
  "SA07n926:460": "bodhāya kṛtaniścayaḥ ||115 ||",
  "SA07n926:461": "tatastadānīṃ gajarājavikramaḥ",
  "SA07n926:462": "padasvanenānupamena bodhitaḥ |",
  "SA07n926:463": "mahāmunerāgatabodhiniścayo",
  "SA07n926:464": "jagāda kālo bhujagottamaḥ stutim ||116 ||",
  "SA07n926:465": "yathā mune tvaccaraṇāvapīḍitā",
  "SA07n926:466": "muhurmuhurniṣṭanatīva medinī |",
  "SA07n926:467": "yathā ca te rājati sūryavatprabhā",
  "SA07n926:468": "dhrūvaṃ tvamiṣṭaṃ phalamadya bhokṣyase ||117 ||",
  "SA07n926:469": "yathā bhramantyo divi cāṣapaṅktayaḥ",
  "SA07n926:470": "pradakṣiṇaṃ tvāṃ kamalākṣa kurvate |",
  "SA07n926:471": "yathā ca saumyā divi vānti vāyava-",
  "SA07n926:472": "stvamadya buddho niyataṃ bhaviṣyasi ||118 ||",
  "SA07n926:473": "tato bhujaṅgapravareṇa saṃstuta-",
  "SA07n926:474": "stṛṇānyupādāya śucīni lāvakāt |",
  "SA07n926:475": "kṛtapratijño niṣasāda bodhaye",
  "SA07n926:476": "mahātarormūlamupāśritaḥ śuceḥ ||119 ||",
  "SA07n926:477": "tataḥ sa paryaṅkamakampyamuttamaṃ",
  "SA07n926:478": "babandha suptoragabhogapiṇḍitam |",
  "SA07n926:479": "bhinadmi tāvadbhuvi naitadāsanaṃ",
  "SA07n926:480": "na yāmi yāvatkutakṛtyatāmiti ||120 ||",
  "SA07n926:481": "tato yayurmadamatulāṃ divaukaso",
  "SA07n926:482": "vavāśire na mṛgagaṇā na pakṣiṇaḥ |",
  "SA07n926:483": "na sasvanurvanataravo'nilāhatāḥ",
  "SA07n926:484": "kṛtāsane bhagavati niścitātmani ||121 ||",
  "SA07n926:485": "iti buddhacarite mahākāvye'rāḍadarśano",
  "SA07n926:486": "nāma dvādaśaḥ sargaḥ ||12 ||"
}