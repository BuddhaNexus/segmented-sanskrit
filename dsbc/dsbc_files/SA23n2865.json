{
  "SA23n2865:3": "ācāryacandrakīrtikṛtā",
  "SA23n2865:10": "Guhyāsamājatantrapradīpodyotanaṭīkā",
  "SA23n2865:14": "ṣaṭkoṭivyākhyā",
  "SA23n2865:21": "ekādaśaḥ paṭalaḥ",
  "SA23n2865:28": "evamubhayayogināṃ dviprakāreṇa hṛdayasaṃcodanamabhidhāyedanīṃ",
  "SA23n2865:29": "vikalpitaniṣpataniṣpannayogināṃ prthamapaṭaloktadvividhadevatārupoddayotanārthamekādaśamapaṭalamupakṣipannāha |",
  "SA23n2865:30": "athetyādi |sarvatathāgatavajraṃ praṇavādyakṣaratrayaṃ tenotpadyamānā puruṣottamā",
  "SA23n2865:31": "devatā yasmin samādhau tannāmakaṃ samādhi citaikāgratāṃ samāpadyāmukhīkṛtya",
  "SA23n2865:32": "idamudājahāra |",
  "SA23n2865:33": "kiṃ tat ? sarvatathāgatānāṃ mantrāḥ guhyābhūtā",
  "SA23n2865:34": "vajravidyā sarvatathāgatamantravajravidyā oṅkārāditritayameva |",
  "SA23n2865:35": "tairniṣpādyate",
  "SA23n2865:36": "paruṣadevatā yasmin tatpaṭalamuktavāniti saṅgitikāraḥ amu mevārtha",
  "SA23n2865:37": "bhagavadvacanena darśayannāha |",
  "SA23n2865:44": "trivajrāḥ kāyavākcittavajrāḥ tanniṣpādakānyakṣarāṇi",
  "SA23n2865:45": "oṅkārādīni trivajrākṣarāṇi tāni mantrāgrāṇi sarvamantraprabhāvatvāt |",
  "SA23n2865:46": "tairmahāmudrāvibhāvanaṃ kartavyam |",
  "SA23n2865:47": "mahāmudreti bhūrbhuvaḥ svaḥ",
  "SA23n2865:48": "prapūjyatvānmahartī mudaṃ harṣa dravati gacchatīti mahāmudrā |",
  "SA23n2865:49": "tasyā vibhāvanaṃ",
  "SA23n2865:50": "kartavyayanuṣṭhe yam |",
  "SA23n2865:51": "jñānavajreṇa sadhakena sarvabodhiḥ pañcākārābhisaṃbodhiḥ",
  "SA23n2865:52": "tatsamāvaham |",
  "SA23n2865:59": "oṅkāramityādinā akṣaratrayasya kāritraṃ",
  "SA23n2865:60": "darśayati | oṅkāraṃ tathāgatahṛdayaṃ tad yogino'bhedyakāyanivartakatvāt",
  "SA23n2865:61": "vajrakayasamāvaham |",
  "SA23n2865:62": "bodhistathatā |",
  "SA23n2865:63": "tato nirmito niṣpanna ātmā yasya sa",
  "SA23n2865:64": "bodhirnirātmā amitabhaḥ |",
  "SA23n2865:65": "tasya bhāvo nairātmyam |",
  "SA23n2865:66": "nairātmyamāḥkarāṃ tatsvabhāvaṃ",
  "SA23n2865:67": "yogino'bhedyavāṅnivartakatvāt vagvajrasamāvaham |",
  "SA23n2865:68": "kāyavācorāśrayabhūtaṃ cittaṃ",
  "SA23n2865:69": "kāyavākcittam akṣobhyasvabhāvam |",
  "SA23n2865:70": "trivajrāṇāmabhedyabhinnatvaṃ yasmin tat",
  "SA23n2865:71": "trivajrābhedyaṃ cittaṃ tadyogisantāne niṣpādayatīti trivajrābhedyasamāvahaṃ hūṃkāramityevamāha",
  "SA23n2865:72": "sarvatathāgatakāya vākcittamantrapuruṣo mahāvajradharaḥ |",
  "SA23n2865:79": "anantaroktamahāmudrāniṣpatti ( ttai )",
  "SA23n2865:80": "rānupūvrya darśayannāha |",
  "SA23n2865:81": "khavajretyādi |",
  "SA23n2865:82": "khavajramakāśaṃ madhyaṃ tadgataṃ sarvavajrajaṃ maṇḍalaṃ cintayet |",
  "SA23n2865:83": "sarvavajrāṇi",
  "SA23n2865:84": "locanādicaturdevyaḥ tābhiranupūvryeṇa nirvartitaṃ maṇḍalaṃ bhavayet | tatra",
  "SA23n2865:85": "bhūbhāgopari bhrūṃkāraṃ kūṭāgāraniṣpattihetu bhūtaṃ vajrameghāstathāgatasamūhāḥ |",
  "SA23n2865:86": "teṣāmadhimokṣeṇa yathāsthanaṃ spharaṇaṃ tadāvahayati dhārayatīti",
  "SA23n2865:87": "vajrameghaspharāvahaṃ bhrūṃkāram |",
  "SA23n2865:88": "tatretyādinā bhruṃkarapradarśanaṃ vajramaṇḍalaṃ",
  "SA23n2865:89": "sūryamaṇḍalaṃ tanmadhyasthaṃ hūṃkāraṃ prabhāvayet |",
  "SA23n2865:90": "hūṃkāraniṣpannaṃ sūryamaṇḍalaṃ",
  "SA23n2865:91": "bhāvayedityabhiprāyaḥ |",
  "SA23n2865:98": "tathaivoṃkārāḥkāraniṣpannaṃ candrapadhmamaṇḍalaṃ",
  "SA23n2865:99": "bhāvayet | evaṃ maṇḍalatrayaṃ niṣpādya padhmakarṇikopari tadeva bījatrayaṃ",
  "SA23n2865:100": "vinyasedityāmnāyaḥ |",
  "SA23n2865:101": "bhrūṃkārmālayamityādinā pūrvoktamartha nigamayati |",
  "SA23n2865:102": "ādhāramaṇḍalaṃ",
  "SA23n2865:103": "dhyātvainaṃ cihnatrayaṃ bhāvayet |",
  "SA23n2865:104": "nānyatheti |",
  "SA23n2865:111": "hṛdayamityādi |",
  "SA23n2865:112": "tryadhvabuddhebhyaḥ",
  "SA23n2865:113": "tryadhvatathāgatānāṃ tryadhvabuddhānāmiti prāptatvāt |",
  "SA23n2865:114": "hṛdayaṃ candramaṇḍalaṃ",
  "SA23n2865:115": "cittasaṃketitatvāt |",
  "SA23n2865:116": "kāyavākcitaṃ tryakṣaraṃ tena yasmin racyate sthivate tat",
  "SA23n2865:117": "kāyavākcittarañjanaṃ candrabimbaṃ cihnatrayamupamardyatāṃ bhavayet | tataḥ",
  "SA23n2865:118": "kimityāha omityādi |",
  "SA23n2865:119": "tasmiścandramaṇḍale buddhakāyasaṃjñakamoṅkāraṃ tathā",
  "SA23n2865:120": "buddhavākpathamāḥkāram |",
  "SA23n2865:127": "jñānānāṃ prakṛtīnāmoghaḥ samūho yasmistazjñānaughaṃ",
  "SA23n2865:128": "cittaṃ tatsvabhāvaṃ hūmkāram |",
  "SA23n2865:129": "idamakṣaratrayaṃ bodhinayottamamiti |",
  "SA23n2865:130": "bodhirmahāsukhapadam |",
  "SA23n2865:131": "tannīyate prāpyate yena tad bodhinayam |",
  "SA23n2865:132": "kiṃ tat akṣaratrayaparāvṛttyā",
  "SA23n2865:133": "saṃjātaṃ pañcākārābhisaṃbodhisūcakaṃ vajraṃ tadevottamaṃ sarvakula viśiṣṭatvāt |",
  "SA23n2865:134": "idamiti anantaroktaṃ yadvajraṃ tat sarvabuddhānāṃ mahāvajra dharayoginaṃ",
  "SA23n2865:135": "buddhabodhiprasadhakam |",
  "SA23n2865:136": "utpattikakrameṇa mahāmudrāniṣpādakam |",
  "SA23n2865:143": "nirmitamityādi |",
  "SA23n2865:144": "etanmahāmudrarupaṃ jñānavajreṇa",
  "SA23n2865:145": "mahāvajradhareṇa nirmitaṃ pradarśitam |",
  "SA23n2865:146": "kimartham ? buddhā ratnapudgalāsteṣāṃ hetuḥ saṃvṛtisatyam |",
  "SA23n2865:147": "phalaṃ ca paramārthasatyam |",
  "SA23n2865:148": "hetuphalābhyā mudeti niṣpādyate iti hetuphalodayam |",
  "SA23n2865:149": "pariśuddhadevatārupaṃ tadartha nirmitaṃ mahāvajradhareṇa |",
  "SA23n2865:150": "eta ityādi | mantrā",
  "SA23n2865:151": "vidyā iti ca kalpādau kīrtitāḥ niṣpādanādisamayairiti |",
  "SA23n2865:152": "niṣpādanaṃ pūrvamevāra kṣaṇabhakṣaṇādisamayaiḥ",
  "SA23n2865:153": "sārdha kathitāḥ |",
  "SA23n2865:154": "buddhapuruṣā akṣobhyādaya eva nānyaiḥ |",
  "SA23n2865:155": "kairityāha |",
  "SA23n2865:156": "trivajrābhedyabhāvanaistathāgataiḥ |",
  "SA23n2865:163": "sarvatathāgatetyādinā anumevārthamupasaṃharati |",
  "SA23n2865:164": "sarvatathāgatakāyavākicattatryakṣaraṃ tasya samayaṃ tadudbhūtaṃ sūryādimaṇḍalatritayam |",
  "SA23n2865:165": "tasmin tattvaṃ padyopari tryakṣaram |",
  "SA23n2865:166": "jñānamiti sarva parāvṛttiniṣpannaṃcandramaṇḍalam",
  "SA23n2865:167": "vajraṃ candramaṇḍalopari vinyastākṣaratritayanivṛttaṃ pañcasūcikamahāvajram",
  "SA23n2865:168": "tenādhiṣṭhiyate niṣpādyata ityadhiṣṭhānaṃ mahāmudrārupam tasya hetuḥ kāraṇam |",
  "SA23n2865:169": "tanniṣpādikā cittaikāgratā samādhiḥ sa tathoktaḥ |",
  "SA23n2865:176": "vivikteṣvityādinā sādhakasya pratipatti",
  "SA23n2865:177": "darśayati | vivikteṣu janasampātarahiteṣu ramyeṣviti puṣpaphalapallavopetavividhatarulatopagūdamanojñasalilāśayavirajitamanonukūleṣu",
  "SA23n2865:178": "sthāneṣu sthitvā yaḥ sādhakaḥ imamanantarokttaṃ yogaṃ samārabhedabhyaset ,",
  "SA23n2865:179": "tena kāyavākcittaṃ mahāvajradharatvaṃ sidhyate",
  "SA23n2865:180": "sādhyate | pakṣaikeneti pakṣaḥ gurudevatāviṣaye sampratyayaḥ |",
  "SA23n2865:181": "tasminnekena",
  "SA23n2865:182": "niścitena tatpareṇa na saṃśayaḥ |",
  "SA23n2865:183": "niyataṃ kāyavākcittaṃ sādhyate'nena krameṇotpatti",
  "SA23n2865:184": "kramamabhyasan mantrī niṣpannakramasamādhimadhigamya niyatamihaiva janmani",
  "SA23n2865:185": "mahāvajradharatvaṃ prāpnotītyabhiprāyaḥ |",
  "SA23n2865:192": "evaṃ mahāvajradharayogināmutpattikramasādhanaṃ",
  "SA23n2865:193": "saṃdaśrya vairocanādiyoginamekasmṛtisamādhi darśayannāha |",
  "SA23n2865:194": "khavajramadhyagataṃ",
  "SA23n2865:195": "cintet svacchaṃ maṇḍalamuttamamiti |",
  "SA23n2865:196": "abhāvetyādi gāthānurveṇa kūṭāgārodare",
  "SA23n2865:197": "dvātriśaddevatāvinyāsaparyantamadhimokṣeṇa samāpadya oṃśūnyatetyādimantreṇa",
  "SA23n2865:198": "sarva nirābhāsīkṛtya omṅkārādyakṣaratrayeṇa candrasūryapadyāni niṣpādya",
  "SA23n2865:199": "padhmakarṇikopari tryakṣaraṃ vicintya sarvaparāvṛttyā svacchamaṇḍalaṃ candramaṇḍalaṃ",
  "SA23n2865:200": "vicintayet |",
  "SA23n2865:201": "niṣpādya svamantrasamayamiti |",
  "SA23n2865:202": "candramaṇḍalopari tryakṣaraṃ vinyasya",
  "SA23n2865:203": "tatparāvṛtyā cakraṃ bhavayitvā tajjātaṃ vairocanaṃ samayasattvaṃ bhāvayet |",
  "SA23n2865:210": "tasya hṛdaye jñānasattvaṃ vibhāvya tasyāpi hṛdaye",
  "SA23n2865:211": "oṅkāraṃ samādhisattvākhyaṃ hṛdayabhūtaṃ pañcaraśmi pañcaraśmyupetaṃ nyaset |",
  "SA23n2865:212": "vairocanagrabhāvanaiḥ vairocanayogibhiḥ mahāmeghāḥ vairocanasamūhāḥ tān | oṅkāraṃ",
  "SA23n2865:213": "sphārayan dhyāyāt |",
  "SA23n2865:220": "anena samādhinā buddhasyotpattikramajñasya",
  "SA23n2865:221": "vajravairocanasyodadhiriva svakulīlānāṃ prabhavatvāt |",
  "SA23n2865:222": "sa yasya sādhakasya kāyaṃ",
  "SA23n2865:223": "kāyaḥ sidhyate pakṣamātreṇa samādhyāsaktimatreṇa kriyaprapañcanirapekṣayaivetyabhiprāyaḥ |",
  "SA23n2865:224": "buddhakāyaḥ sarvalakṣaṇopetavajrakāyaḥ |",
  "SA23n2865:225": "tatsamaprabhaḥ tatsamarddhiḥ sidhyati |",
  "SA23n2865:226": "trivajrakalpaṃ mahāvājradharaprabhubhūtva sevayan pañcajñānināṃ tiṣṭheyuḥ tiṣṭhet |",
  "SA23n2865:227": "pañcajñānāni cakṣurādīni vijñānāni tāni grāhakasvabhāvena yeṣāṃ te pañcajñānino",
  "SA23n2865:228": "rupādayo viṣayāḥ |",
  "SA23n2865:229": "tānanubhavannāsaṃsārā ( raṃ )",
  "SA23n2865:230": "tiṣṭhedityāha bhagavān kāyavajragruhyo",
  "SA23n2865:231": "mahāvajradharaḥ |",
  "SA23n2865:232": "sarvatathāgatacandramaṇḍalaṃ tatra vajramabhedyasvabhāvaṃ",
  "SA23n2865:233": "cakraṃ tasya raṣmivyūho mahāmudrārupaṃ tanniṣpādakaḥ samādhiḥ",
  "SA23n2865:234": "sarvatathāgatavajraraśmivyūho nāma |",
  "SA23n2865:241": "khavajretyādi |",
  "SA23n2865:242": "tathaiva sarva saṃpādya dharmamaṇḍalaṃ",
  "SA23n2865:243": "padhmamuttamaṃ raktamaṣṭadalaṃ dhyātvā tatparāvṛtyā svamantrapuruṣamamitābhaṃ",
  "SA23n2865:244": "niṣpādya taddṛdi jñānasattvaṃ dhyātvā vākpathe jñānasattve āḥkāraṃ",
  "SA23n2865:245": "samādhisattvaṃ pañcavarṇa mahāvajramabhedyasvarupaṃ",
  "SA23n2865:246": "lokeśvarāgrabhāvanairamitābhagatacetovṛttibhiḥ nyaset | niṣpādya",
  "SA23n2865:247": "samayajñānavāksamaya [ pra ] pañcakamiti |",
  "SA23n2865:248": "samayaḥ samayasattvaḥ jñānaṃ",
  "SA23n2865:249": "jñānasattvam |",
  "SA23n2865:250": "vāksamayaḥ samādhisattvaḥ |",
  "SA23n2865:251": "niṣpādyaitatsattvatritayamekīkṛtya",
  "SA23n2865:252": "bhāvayet | anenaiva nyāyena pañcakaṃ tathagatapañcakaṃ trisattvarsaṃpuṭīkaraṇena",
  "SA23n2865:253": "bhāvayet |",
  "SA23n2865:260": "dharmavakpatho'mitābhasamādhiḥ samārudaḥ",
  "SA23n2865:261": "sampprāptaḥ dharmaḥ paramārthasatyaṃ ,",
  "SA23n2865:262": "vajraṃ saṃvṛtisatyam |",
  "SA23n2865:263": "dharmasamāyuktaṃ vajraṃ",
  "SA23n2865:264": "dharmavajraṃ mahāvajradharapadaṃ samāvahet , prāpnuyāt |",
  "SA23n2865:265": "trivajrakalpamityādi vivṛtārtham |",
  "SA23n2865:272": "sarvatathāgato jñānasattvaḥ vāgvajraṃ",
  "SA23n2865:273": "samādhisattvaḥ samayaḥ samayasattvaḥ sarvatathāgavāgvajrasamayānāṃ saṃbhavo",
  "SA23n2865:274": "yasmin sa tathoktaḥ samādhiḥ |",
  "SA23n2865:281": "khavajetyādi |",
  "SA23n2865:282": "mahāvajradharasamādhivat sarva saṃpādya",
  "SA23n2865:283": "svabimbapuruṣaṃ samayasattvaṃ niṣpādya cittaṃ jñānasattvastatsaṃsthitaṃ",
  "SA23n2865:284": "jñānasattvahṛdayasaṃsthitaṃ hūṃkāraṃ samādhisattvākhyaṃ cintayet |",
  "SA23n2865:291": "evaṃ trisattvamayaṃ mahāsamayatattvama kṣobhyaṃ",
  "SA23n2865:292": "pañcavarṇaraśmiprabhāmaṇḍalopetaṃ vibhāvayet |",
  "SA23n2865:293": "jñānavajreṇākṣobhyayoginā |",
  "SA23n2865:294": "sarvavajrajinau'kṣobhyaḥ tasyālayaṃ mahāmudrārupam |",
  "SA23n2865:295": "kartavyaṃ niṣpādya | evaṃ",
  "SA23n2865:296": "sātatyena catuḥsandhyamabhyasyate saparipakkakuśalamūlatvāt |",
  "SA23n2865:297": "vajropamasamādhimadhimadhigamyehaiva janmani mahāmudrasiddhi pratilabhata iti",
  "SA23n2865:298": "darśayitumāha |",
  "SA23n2865:299": "vajracittetyādi |",
  "SA23n2865:300": "vajraṃ paramārthasatyaṃ cittaṃ samvṛtisatyaṃ",
  "SA23n2865:301": "tābhyāṃ ghaṭitaḥ vajracittamayaḥ |",
  "SA23n2865:302": "devamanuṣyāṇāmanuśāsakatvāt śāstā |",
  "SA23n2865:303": "jñānaguṇāḥ",
  "SA23n2865:304": "kāmaiśvaryādayo'ṣṭau teṣāmudadhirākaratvāt |",
  "SA23n2865:305": "trivajrakalpamityādi gatārtham |",
  "SA23n2865:312": "vajraṃ samayasattvaḥ cittaṃ jñānasattvaḥ guhyāṃ",
  "SA23n2865:313": "samādhisattvaḥ |",
  "SA23n2865:314": "evaṃ trisattvātmakatvād vajracittaguhya mahāvajradhara ityāha |",
  "SA23n2865:315": "sarvatathāgatetyādinā prakaraṇārthamupasaṃharati |",
  "SA23n2865:316": "sarvatathagato mahāvajradharaḥ |",
  "SA23n2865:317": "kāyavākcitta vairocanaditrayam |",
  "SA23n2865:318": "sa mayo'moghasiddhiḥ |",
  "SA23n2865:319": "vajro ratnasaṃbhavaḥ | eṣāṃ",
  "SA23n2865:320": "samādhirabhedopacārāt sarvatathāgatakāyavākcittasamayavajro nāma |",
  "SA23n2865:321": "yathārutam |",
  "SA23n2865:328": "evaṃ kalpitayogasya phalarupeṇa niṣpannakramaṃ",
  "SA23n2865:329": "sūcayitvā tatsākṣādeva darśayitumāha |",
  "SA23n2865:330": "mahavajradharamityādi |",
  "SA23n2865:331": "jñāyata iti jñānaṃ",
  "SA23n2865:332": "sthiracalaṃ tasya maṇḍalaṃ samuhaḥ trailokyaṃ tanmadhye mahavajraṃ svaṃ",
  "SA23n2865:333": "mahāmudrārupaṃ samādhāyādhipatitvena sthāpayitvā sarvakāyeṣu sthāvarajaṃgameṣu",
  "SA23n2865:334": "khakāramākāśīkaraṇamanubhedakrameṇa sarva nirābhāsīkṛtyātmanyanukrameṇa praveśaḥ |",
  "SA23n2865:335": "taṃ krritvā khavajrajñānasamo bhavet |",
  "SA23n2865:336": "trisattvātmaka ekaḥ syāt | khamiti",
  "SA23n2865:337": "prabhāsvaraḥ |",
  "SA23n2865:344": "tasya ca buddhaiḥ vairocanādisvabhāvaiḥ",
  "SA23n2865:345": "rupaskandhādibhirbodhisattvaiḥ kṣitigarbhadisvabhāvaiḥ cakṣurādibhirmuhurmuhuriti |",
  "SA23n2865:346": "rupaskandhagatetyādikrameṇa pratikṣaṇaṃ pūjyamānaḥ |",
  "SA23n2865:347": "jñānatrayātmake svasmin",
  "SA23n2865:348": "praveśyamānaritradhā prajñopāyopalabdhasvabhāvena kalpyata iti trikalpaṃ",
  "SA23n2865:349": "jñānatrayaṃ tat samayati vilayaṃ gacchati yasmin tat trikalpasamayaṃ",
  "SA23n2865:350": "prabhāsvaraṃ taṃ tiṣṭhet |",
  "SA23n2865:351": "tiṣṭhan buddhairapi na dṛśyata iti |",
  "SA23n2865:352": "buddhāstrīṇi",
  "SA23n2865:353": "jñānāni | tairapi yathā na dṛśyate yathādarśanamanābhāsastathā tiṣṭhedityāha",
  "SA23n2865:354": "bhagavān khavajrasamaya iti |",
  "SA23n2865:355": "khavajraṃ prabhāsvaraṃ tasmāt sameti udracchatīti",
  "SA23n2865:356": "khavajrasamayo mahāvajradharaḥ vakṣyamāṇa kaṃ vyutthānasamādhi sūcayannāha",
  "SA23n2865:357": "kāyetyādi | kāyavākcittaṃ mahāmudrā tasyā antarddhānaṃ prabhāsvaraṃ tasmāt saṃbhatīti",
  "SA23n2865:358": "saṃbhavaḥ vyūhaḥ sthiracalasarvabhāvātmakaṃ jñānakāyaṃ tasya mālā yathāśayaṃ",
  "SA23n2865:359": "vairocanādirupeṇa pravṛttiḥ sā yasmin samādhau cittakṣaṇe sa tathoktaḥ |",
  "SA23n2865:366": "tameva sarvāsamādhi darśayannāha dhyātvetyādi |",
  "SA23n2865:367": "svamantrapuruṣo'tra pariśuddhamahāmudrārupaṃ vajramaṇḍamadhyataḥ",
  "SA23n2865:368": "prabhāsvaramadhyādutthitaṃ dhyātvā tadanantaraṃ prākṛtasattvānāṃ viṣayaubhūtanirmāṇa",
  "SA23n2865:375": "kāyaṃ parigṛhyā prāṇāyāmāṅgabhūtamanāhataṃ haṃkāravajrākhyaṃ",
  "SA23n2865:376": "hṛdaye kṛtvā sthāpayitvā tadanantaraṃ raśmivibhāvanā kāryā |",
  "SA23n2865:377": "daśa raśmaya | prāṇāyāme",
  "SA23n2865:378": "sthitāḥ | teṣāṃ vibhāvanā dakṣiṇādibhedena praveśādikrameṇa pravṛttiḥ |",
  "SA23n2865:385": "hūmiti anabhilāpyānabhilāpyasūcakam |",
  "SA23n2865:386": "mañjuravinaśvaraḥ śrī [ ḥ ] prabhāsvaraḥ |",
  "SA23n2865:387": "tasmāt samudetīti mañjuśrīsamayaḥ |",
  "SA23n2865:388": "saṃbhujyate'vaivartikairviṣayīkriyata iti sa eva saṃbhogaḥ jñānasamayaḥ kāyaḥ",
  "SA23n2865:389": "taṃ prāpya kāyavākcittavajrāṇi nirmitakāyavākcittāni tāni yasya santi sa",
  "SA23n2865:390": "kāyavākcittavajriṇaḥ vajrīti prāpte |",
  "SA23n2865:391": "bodhiḥ paramārthaḥ sattvaḥ saṃvṛtisatyaṃ",
  "SA23n2865:392": "te ātmā deho yasya sa bodhisattvātmā |",
  "SA23n2865:393": "daśa bhūmayaḥ daśa raśmayaḥ |",
  "SA23n2865:394": "teṣu pratiṣṭhitaḥ |",
  "SA23n2865:395": "yo'nantaroktakrameṇa bhāvakaḥ sa evaṃ saṃbhavet |",
  "SA23n2865:402": "bodhisa [ 74a ] ttvetyādinā samādhi samāpayati |",
  "SA23n2865:403": "satyadvayena",
  "SA23n2865:404": "parigṛhītaṃ rupaṃ bodhisattvaḥ |",
  "SA23n2865:405": "tacca jñāṃ sa eva samayaḥ | sa eva",
  "SA23n2865:406": "traidhātukācchādakatvāccandraḥ āsaṃsāraṃ sthitvā sattvārthakaraṇād vajraḥ |",
  "SA23n2865:407": "tannippādakasamādhirapi tathocyate |",
  "SA23n2865:408": "sandhyābhāṣā |",
  "SA23n2865:415": "anantaroktakrameṇopāttanirmāṇakāyasya cakṣurādyātanaviśuddhidvāreṇa",
  "SA23n2865:416": "phalaṃ darśaṃyitumāha |",
  "SA23n2865:417": "khadhātvityādi |",
  "SA23n2865:418": "ādau cakṣurgolakaśūnyīkaraṇena labdhaṃ",
  "SA23n2865:419": "yatsausīrya tat khadhātuḥ |",
  "SA23n2865:420": "tanmadhyagataṃ thlīṃ kāraṃ jvālasuprabhaṃ",
  "SA23n2865:421": "sūryenduraśmibhirdīpyamānaṃ asyante kṣipyante yenetyastraṃ paramāḥ",
  "SA23n2865:422": "śakrādivighnagaṇāḥ tadarthamastraṃ paramāstram ,",
  "SA23n2865:423": "tanniṣpannena cakṣurbhramaṇena",
  "SA23n2865:424": "sarvavighravidhvaṃsanāt paramāstraṃ thlīṃkāraṃ taṃ vajrakāyena kṣitigarbhasvabhāvena",
  "SA23n2865:425": "dhyātvā khavajrakāyasamo bhavediti |",
  "SA23n2865:426": "mahāvajradhara ivānantalokadhātusthitaḥ",
  "SA23n2865:427": "sarvabhāvān hastamalakavat paśyet |",
  "SA23n2865:428": "thlīṃ iti uktārthasūcakaṃ bījam |",
  "SA23n2865:435": "khavajrasamayo mahāvajradharaḥ |",
  "SA23n2865:436": "tasya vyuho",
  "SA23n2865:437": "mahāmudrā | sā ālayaḥ sthanaṃ yasya kṣitigarbhasya sa khavajrasamayavyūhālayaḥ |",
  "SA23n2865:438": "tatscakasamādhirapi tathocyate |",
  "SA23n2865:445": "evamanantaroktakrameṇa vakṣayamāṇena ca",
  "SA23n2865:446": "divyavakṣuḥśrotrādikaṃ bhāvayati yaḥ sa yogī pañcābhijñāsamo",
  "SA23n2865:447": "mahāvajradharatulyo jāyate |",
  "SA23n2865:448": "katham ? buddhābhijñāgrasamayaiḥ buddhāstryadhvavartino",
  "SA23n2865:455": "jināḥ teṣāmabhijñāgrasamayā divyanetrādayaḥ |",
  "SA23n2865:456": "tairmahāvajradharasamo bhavet |",
  "SA23n2865:457": "idamiti yadanantaroktaṃ divyaṃ cakṣuḥ",
  "SA23n2865:458": "sarvasiddhīnāmiti |",
  "SA23n2865:459": "sarve svaparayūthyāḥ teṣāṃ siddhīnāṃ buddhaṃ svacittaṃ tad",
  "SA23n2865:460": "yathābhūtamabhijānatīti buddhābhijñā mahāyoginaḥ |",
  "SA23n2865:461": "teṣāmagrasādhanam",
  "SA23n2865:462": "sarvasiddhīnāmapi pradhānasādhanam |",
  "SA23n2865:463": "buddhamaṇḍalaṃ sarvatathāgatasamayamuttam |",
  "SA23n2865:464": "vajravadabhedyātmakaḥ sattvaḥ vajrasattvaḥ |",
  "SA23n2865:465": "taṃ bhāvayitvā niṣpādya",
  "SA23n2865:466": "khadhātumadhyagataṃ śrotrasthānabhāvitaprabhāsvaramadhyagataṃ jñānaṃ vajrapāṇīḥ |",
  "SA23n2865:467": "tanniṣpādakamoṅkāraṃ bhāvayet |",
  "SA23n2865:474": "trivajrasamayo vajrapāṇiḥ |",
  "SA23n2865:475": "tasya sādhanena",
  "SA23n2865:476": "tanmayīkaraṇena trivajrākṣobhyo mahāvajradharaḥ",
  "SA23n2865:477": "anantalokadhātusthitaividharābdānāṃ śrotrabilapatitaikaśabdavat grahaṇena",
  "SA23n2865:478": "tatsamatvāt trivajrākṣobhyasamo bhavati yogītyāha bhagavānakṣobhyavajro",
  "SA23n2865:479": "mahāvajradharaḥ |",
  "SA23n2865:486": "akṣobhyasamakāyeneti |",
  "SA23n2865:487": "mahāvajradharatulyakāyaḥ",
  "SA23n2865:488": "tathaivāprākṛtavākcittadhāraṇāt vākcittāgradhṛk sadā sarvakālaṃ sarveṣu",
  "SA23n2865:489": "lokadhātuṣu pūjyate akṣobhyavajriṇeti śrotrasthena vajrapāṇinā pūjyate sevyate |",
  "SA23n2865:496": "akṣobhyasamayo'kṣobhyaḥ tasmāt saṃbhavatīti akṣobhyasamayābhisaṃbhayo",
  "SA23n2865:497": "vajrapāṇiḥ |",
  "SA23n2865:498": "tadutpādakaḥ samādhirapi tathoktaḥ |",
  "SA23n2865:505": "khadhātpvityādinā ākāśagarbhasamādhimāha |",
  "SA23n2865:506": "khadhātumadhyagataṃ prabhāsvaramadhvarga buddhamaṇḍalaṃ cintet ākāśavajraṃ",
  "SA23n2865:507": "prabhāvitveti |",
  "SA23n2865:508": "mahāmudrārupasyāpi ghrāṇendriyadeśe ākāśavajraṃ prabhāsvaraṃ",
  "SA23n2865:509": "dhyātvā ratnaḥ |",
  "SA23n2865:510": "ākāśagarbhaḥ tanniṣpādaka oṃkāro ratna oṃkārastaṃ vibhāvayet |",
  "SA23n2865:517": "trivajrasamayadhyāneneti |",
  "SA23n2865:518": "trivajraḥ trividho",
  "SA23n2865:519": "gandhaḥ | taṃ sameti gacchatīti trivajrasamayaḥ |",
  "SA23n2865:520": "ākāśagarbhaḥ |",
  "SA23n2865:521": "tasya dhyānena",
  "SA23n2865:522": "tatsvabhāvālambanena |",
  "SA23n2865:523": "trivajraketumaṃhāvajradharo'nekalokadhātusthitagandhagrahaṇena",
  "SA23n2865:524": "tatsamo bhavet ityāha bhagavān ratnaketuvajro mahāvajradharaḥ |",
  "SA23n2865:531": "kāyetyādi |",
  "SA23n2865:532": "evaṃbhāvakaḥ aprākṛtakāyavākcittena",
  "SA23n2865:533": "ratnaketusamaprabha iti |",
  "SA23n2865:534": "gaganagajrasamādhinā ratnaketusamarddhiḥ sa bhavet |",
  "SA23n2865:535": "bodhinairātyaṃ prabhāsvaram tatra jñānaṃ catuḥśūnyātmakaṃ mahāvajradharupam |",
  "SA23n2865:536": "tadeva śrāvakādyaviṣayatvād guhyām |",
  "SA23n2865:537": "tena samamālayaṃ śarīraṃ yasya sa",
  "SA23n2865:538": "bodhinairātmyajñānaguhyāsamālayaḥ sādhakaḥ ratnasamayaḥ |",
  "SA23n2865:545": "triṣprakāro gandha [ ḥ ] saṃbhujyate anubhūyate yena sa ratnasamayasaṃbhogavajra",
  "SA23n2865:546": "ākāśagarbhaḥ |",
  "SA23n2865:547": "tannivartakasamādhirapi tathā |",
  "SA23n2865:554": "khadhātvityādi |",
  "SA23n2865:555": "pūrvavanmahāmudrārupaṃ niṣpādya",
  "SA23n2865:556": "tasmin jihvāpradeśe lokānamīśvaro bhūtakoṭistatprabhāvitvāt dharmo lokeśvaraḥ",
  "SA23n2865:557": "tannivartaka oṃkāro dharma oṃkāraḥ taṃbhāvayet |",
  "SA23n2865:564": "trivajretyādi |",
  "SA23n2865:565": "trivajraṃ trividho rasaḥ taṃ",
  "SA23n2865:566": "sameti gaccatīti trivajrasamayo lokeśvaraḥ |",
  "SA23n2865:567": "tasya dhyānena taddvāreṇa",
  "SA23n2865:568": "trividharasānubhavanāt trivajrāmito mahāvajradharaḥ daśadiglokadhātuparyāyeṣu",
  "SA23n2865:569": "rasānubhāvanena tatsamo bhavet ityāha bhagavānamitavajraḥ |",
  "SA23n2865:576": "ya evamālambayati ,",
  "SA23n2865:577": "bhavet sa kāyādīnāmamitāyuḥsamatejāḥ |",
  "SA23n2865:578": "mṛdvindriyādisarvasattvānāṃ",
  "SA23n2865:579": "mahāyānapathaḥ buddhatvamārgaḥ |",
  "SA23n2865:580": "tadartha upāyo ( udayo )",
  "SA23n2865:581": "yasya sa mahāyānapathodayo bhavet |",
  "SA23n2865:588": "amitaguṇo mahāvajradharaḥ tasmin",
  "SA23n2865:589": "traidhātukasthitasarvarasānāṃ jihvendriyasthaikarasavat grahaṇena prabhā sā",
  "SA23n2865:590": "śohamānā śrīryasya so'mitaguṇaprabhāsaśrīḥ lokeśvaraḥ tatsūcakasamādhirapi",
  "SA23n2865:591": "tadākhyaḥ |",
  "SA23n2865:598": "khadhātvityādi |",
  "SA23n2865:599": "pūrvavadādiyogaṃ kṛtvā samaya oṃkāraṃ",
  "SA23n2865:600": "prabhāvitvā vajrotpalaṃ prabhāvayedityāmrāyaḥ |",
  "SA23n2865:601": "samayaḥ sarvanivaraṇaviṣkambhī",
  "SA23n2865:602": "tanniṣpādakaṃ bījaṃ samaya oṃkāraḥ sparśendriyasthāne prabhāsvaraśodhanapūrvakaṃ",
  "SA23n2865:603": "tatsamaya oṃkāraṃ prabhāvitvā vajramevotpalaṃ mukulākaratvād vajrotpalaṃ taṃ",
  "SA23n2865:604": "prabhāvayet |",
  "SA23n2865:611": "trivajraṃ trividhaṃ sparśa tat sameti",
  "SA23n2865:612": "gacchatīti trivajrasamayaḥ sarvanivaraṇaviṣkambhī |",
  "SA23n2865:613": "tasya dhyānena",
  "SA23n2865:614": "trivajro'moghasiddhiḥ",
  "SA23n2865:615": "aparyantalokadhātusthitānekasparśānāmekamudrāpadhmagatasparśavajravadanubhavanena",
  "SA23n2865:616": "tatsamo bhavet |",
  "SA23n2865:617": "ityāha bhagavānamoghavajro mahāvajradharaḥ |",
  "SA23n2865:624": "asyānuśaṃsāpradarśanaṃ kāyetyādi | ya evaṃ",
  "SA23n2865:625": "bhāvayati sa kāyādinā vajrāmoghaḥ amoghasiddhiḥ tatsamā prabhā yasya sa",
  "SA23n2865:626": "tathoktaḥ | jñānaṃ sarvanivaraṇaviṣkambhī tasyodradhiḥ sthānamamoghasiddhiḥ | śrīḥ",
  "SA23n2865:627": "paramānandasukhaṃ tadasyāstīti śrīmān sarvasattvānāmarthaḥ sarvasattvārthaḥ sarvasattvārthajananalakṣaṇaḥ sa saṃbhavati",
  "SA23n2865:628": "yasmāditi sarvasattvasaṃbhavaḥ amoghasamayo'moghasiddhiḥ |",
  "SA23n2865:629": "tasmāt saṃbhavo yasya",
  "SA23n2865:630": "sa sarvanivaraṇaviṣkambhī |",
  "SA23n2865:631": "tasya raśmayaḥ tadvinirgatabodhicittabindavaḥ | teṣāṃ",
  "SA23n2865:632": "saṃbhavaḥ prasavo yasmin samādhau yuktaḥ sa tathoktaḥ |",
  "SA23n2865:639": "evaṃ boddhisattvānāṃ cakṣurindriyādiṣu",
  "SA23n2865:640": "nyāsamuktvā tathāgatanyāsenāpi niṣpādayediti darśayannāha |",
  "SA23n2865:641": "khadhātvityādi |",
  "SA23n2865:642": "khadhātustathatā |",
  "SA23n2865:643": "tanmadhyādāgataḥ khadhātumadhyagataṃ utpatikrameṇa niṣpannaṃ",
  "SA23n2865:644": "suprabhaṃ buddhamaṇḍalaṃ mahāvajradharupaṃ cintedātmānaṃ bhāvayet |",
  "SA23n2865:645": "tasya cakṣuḥsthāne",
  "SA23n2865:646": "vairocanavajraṃ prabhāvitvā trikāya oṃkāraṃ prabhāvayediti |",
  "SA23n2865:647": "prabhāvitvā trikāya",
  "SA23n2865:648": "oṃkāraṃ vairocanavajraṃ prabhāvayedityānupūvryā yogaḥ |",
  "SA23n2865:649": "trikāyo vairocanaḥ tanniṣpādaka",
  "SA23n2865:650": "oṃkāraḥ trikāya oṃkāraḥ |",
  "SA23n2865:651": "taṃ cakṣurgolake bhāvayitvā tatparāvṛtyā vairocanameva",
  "SA23n2865:652": "cakṣurindriyasvarupeṇa tāvat |",
  "SA23n2865:659": "trivajraṃ trividhaṃ rupaṃ cakṣurindriyasvabhāvena",
  "SA23n2865:660": "sametyālambayatīti trividhavajrasamayo vairocanaḥ |",
  "SA23n2865:661": "tasya cakṣurbhāvena dhyānena",
  "SA23n2865:662": "trivajravairocano mahāvajradharaḥ pūrvavat tatsamo bhavet |",
  "SA23n2865:663": "ityāha bhagavān",
  "SA23n2865:664": "vairocanavajraḥ |",
  "SA23n2865:671": "kāyetyādinānuśaṃsāmāha |",
  "SA23n2865:672": "evaṃ bhāvayati yaḥ",
  "SA23n2865:673": "sādhakaḥ sa kāyādivajreṇa vairocanasaprabhaḥ vairocanasamānatejāḥ jñānasvarupeṇa",
  "SA23n2865:674": "jñānamūrtitvena saṃbudhyate jñāyata iti jñānasaṃbodhiḥ trikāyabhedyaṃmahāvajradharapadaṃ",
  "SA23n2865:675": "tat sādhayatīti trikāyābhedyasādhakaḥ sa sādhako bhavet |",
  "SA23n2865:682": "kāyavākcittatvenālambyate gṛhyāta iti",
  "SA23n2865:683": "kāyavākcittālambanaṃ mahāvajradharupaṃ tasya cakṣurindriyasthāne sthitvā",
  "SA23n2865:684": "trividhaṃ rupaṃ saṃbudhyate jānātīti saṃbodhiḥ |",
  "SA23n2865:685": "sa evāpratihataprasaratvād",
  "SA23n2865:686": "vajraḥ tanniṣpādakasamādhirapi kāyavākcittālambanasaṃbodhivajro nāma |",
  "SA23n2865:687": "nāsandhyam |",
  "SA23n2865:694": "parvateṣvityādinā sādhadhanasthānamāha | parvateṣu",
  "SA23n2865:695": "phalapuṣpādyalaṅkṛteṣu giriśikhareṣu vivikteṣu janasaṃpātarahiteṣu nadīprasravaṇeṣu",
  "SA23n2865:696": "udyānādinikaṭapradeśeṣu śmaśānādipviti |",
  "SA23n2865:697": "ādiśabdādekavṛkṣaśūnyāgāradevatālayādyanyeṣvapi",
  "SA23n2865:698": "mano'nukuleṣu idamanantaroktaṃ dhyānasamuccayaṃ kṣitigatabhaṃdisamādhivṛndaṃ",
  "SA23n2865:699": "kārya karaṇīyam | neyārthaḥ |",
  "SA23n2865:706": "parvateṣu pīnastana jaghanādisamanviteṣu",
  "SA23n2865:707": "nārījaneṣu vivikteṣu kanyājaneṣu nadīprasravaṇesū sarvajanasādhāraṇeṣu",
  "SA23n2865:708": "veśyādistrījaneṣu śmaśānādiṣviti śmaśānavallokagarhiteṣu caṇḍālarajakādistrījaneṣvidaṃ",
  "SA23n2865:709": "dhyānasamuccayaṃ kāryamiti nītārthaḥ |",
  "SA23n2865:716": "evaṃsthānasampadamāsādya vairocananyāsena",
  "SA23n2865:717": "divyacakṣuḥsādhanamabhidhāya tathaivādhipatyādinyāsena",
  "SA23n2865:718": "divyaśrotrādisādhanamāha |",
  "SA23n2865:719": "akṣobhyetyādi |",
  "SA23n2865:720": "akṣobhyaniṣpādakaṃ jñānarmoṃkārabījaṃ",
  "SA23n2865:721": "tatparāvṛttyā saṃbhūtaṃ vajramakṣobhyaḥ akṣobhyajñānavajrādayo'kṣobhyatnasaṃbhavāmitābhāmoghasiddhayaḥ",
  "SA23n2865:722": "tān | pūrvavat |",
  "SA23n2865:723": "śrotrāyatanādiṣu prabhāsvarālambanapūrvakaṃ dhyātvā",
  "SA23n2865:724": "pañcābhijñāprayogeṇa mahāvajradharayogena sthāne kṣitigarbhadisthāne buddhāgrā",
  "SA23n2865:725": "vairocanādayaḥ teṣāṃ bhāvanā kāryā |",
  "SA23n2865:726": "ityāha bhagavān |",
  "SA23n2865:727": "mahāvajrāḥ sādhakāḥ teṣāṃ",
  "SA23n2865:728": "samayavajraḥ abhedyasamayaḥ tamupadeṣṭuṃ jānātīti mahāvajrasamayaḥ vajrābhijño",
  "SA23n2865:729": "mahāvajradharaḥ |",
  "SA23n2865:730": "yathārutam |",
  "SA23n2865:737": "utpattikrameṇa bījavinyāsapūrvakaṃ",
  "SA23n2865:738": "pañcābhijñāsādhanamupadiśya niṣpannakrameṇopakṣipannāha |",
  "SA23n2865:739": "pañcaśūlamityādi |",
  "SA23n2865:740": "pañcaśūlaṃ pañcendriyāṇi śūlavadviṣayeṣu nimajjanāt | tadeva",
  "SA23n2865:741": "mahāvajramavyāhataprasaratvāt |",
  "SA23n2865:742": "pañcajvālā udvāhādipañcaraśmayaḥ tairvibhūṣitaṃ",
  "SA23n2865:743": "maṇḍitaṃ spharaṇasaṃharaṇanirvartanāt |",
  "SA23n2865:744": "pañcasthānaṃ rupaśabdādikaṃ tasmin",
  "SA23n2865:745": "prayogeṇa prasaraṇena vajrābhijño mahāvajradharaḥ tatsamo bhavet |",
  "SA23n2865:752": "svamantraṃ praveśādisvabhavamakṣaratrayam",
  "SA23n2865:753": "anavarataṃ ghaṭiyantravat |",
  "SA23n2865:754": "aharniśaṃ pravartamānatvāt |",
  "SA23n2865:755": "cakraṃ sphuliṅgagahanākulaṃ",
  "SA23n2865:756": "pañcaraśmyātmakapañcavajrāṇi pañcākṣarāṇi teṣu prayogeṇa preraṇe",
  "SA23n2865:757": "vajrābhijñasamo bhavet |",
  "SA23n2865:764": "khavajraṃ svamahāmudrārupaṃ tanmadhyagataṃ",
  "SA23n2865:765": "sthitaṃ cakramindriyavṛdaṃ buddhā vairocanādayaḥ tadupalakṣitajvālā",
  "SA23n2865:766": "sitādiraśmayaḥ tatsamaprabhaṃ tatsamaprabhaṃ tatsamānavarṇa dhyātvā vijñāya",
  "SA23n2865:767": "buddhā",
  "SA23n2865:774": "rupādayo viṣayā [ ḥ ] teṣu praveśena samāyogena buddhāstvatra",
  "SA23n2865:775": "pañcaskandhāḥ teṣāmāśrayaḥ jñānamūrtirmahāvajradharaḥ tatsamo bhavediti |",
  "SA23n2865:782": "niṣpannakrameṇaiva samādhyantaramupakṣipannāha |",
  "SA23n2865:783": "buddhamaṇḍalamityādi |",
  "SA23n2865:784": "budhyata iti buddhaṃ kiṃ tat ?",
  "SA23n2865:785": "jñeyamaṇḍalaṃ svakāyam |",
  "SA23n2865:786": "traidhātukakāyamadhimucya vairocanaṃ kalpayet omkāraṃ hṛdaye dhyātveti |",
  "SA23n2865:787": "traidhātukasvabhāvakāyavajrahṛdaye omkāraṃ jñānasattva dhyātvā mantre",
  "SA23n2865:788": "jñānasattve vijñānabhāvanā vindvātmakasamādhisattvabhāvanā kartavyā |",
  "SA23n2865:795": "evamabhyasyato yoginaścittaṃ yadā",
  "SA23n2865:796": "nirodhamadhyagataṃ bindubhāvanāmapyapahāya yadā prabhāsvaraniṣṭhaṃ jāyate ,",
  "SA23n2865:797": "tadā sayogī cintāmaṇivat abhilaṣitārthaprapūrakaḥ",
  "SA23n2865:798": "saṃbhārādvayopetatvāt |",
  "SA23n2865:799": "śrīmān sarvabuddhāgro mahāvajradharastaṃ sādhayatīti",
  "SA23n2865:800": "sarvabuddhāgrasādhako bhavati |",
  "SA23n2865:807": "evaṃ svacittaṃ traidhātukacittasvabhāvaṃ akṣobhyaṃ",
  "SA23n2865:808": "prabhāvayet |",
  "SA23n2865:809": "tatastraidhātukasamayasattvahṛdaye hūṃkāraṃ jñānasattvaṃ dhyātvā",
  "SA23n2865:810": "cittaṃ bindugataṃ nyasediti samayasattvahṛdayasthajñānasattvākhyo bindugataṃ",
  "SA23n2865:811": "svacittaṃ samdhīsattvarupaṃ nyaset |",
  "SA23n2865:818": "svavāgvajraṃ tu pūrvavat traidhātukavāksvabhāvaṃ",
  "SA23n2865:819": "dhyātvā dhyātvā tadamitābhaṃ prabhāvayet |",
  "SA23n2865:820": "samayasattvasya hṛdaye āḥkāraṃ",
  "SA23n2865:821": "jñānasattvarupaṃ dhyātvā vajraṃ svacittaṃ samādhisattvagataṃ nyaset sthāpayet |",
  "SA23n2865:828": "idamityādinānanroktaṃ samādhitrayasyānuśāṃsāmupasaṃharati |",
  "SA23n2865:829": "samayāgramutpattikramabhāvanaṃ tasyāgraṃ samayāgrāgraṃ trivajraṃ",
  "SA23n2865:830": "sarvasattvakāyavākcittaṃ tena svakāyavākcittavajrasyābhedyatvena bhāvanaṃ",
  "SA23n2865:831": "trivajrābhedyatvena bhāvanaṃ nirodhasamayo dhāraṇaṃ tañjñāyate yena",
  "SA23n2865:832": "tannirodhasamayajñānaṃ buddhā rupādayo skandhāḥ teṣāṃ siddhiḥ prākṛtadehāpagamena",
  "SA23n2865:833": "audāryagāmbhīryātmakajñānadehaparigrahaḥ |",
  "SA23n2865:834": "tatsamāvahati prāpayatīti",
  "SA23n2865:835": "buddhasiddhisamāvaham |",
  "SA23n2865:842": "amumevārtha prakārāntareṇa dyotayannāha |",
  "SA23n2865:843": "khavajreṇetyādi |",
  "SA23n2865:844": "prabhāsvaraṃ tatra dhāryata iti khavajradhātuḥ traidhātukaṃ",
  "SA23n2865:845": "tatrasthaṃ bhāvayet |",
  "SA23n2865:846": "svacchamaṇḍalaṃ kāyavajraṃtraidhātukaṃ kāyavākcitte omkāraṃ",
  "SA23n2865:847": "jñānasattvaṃ dhyāyāt |",
  "SA23n2865:848": "traidhātukaṃ kāyavākcittopamardanena jñānakāyaṃ",
  "SA23n2865:849": "bhāvayediti yāvat |",
  "SA23n2865:850": "evaṃ dhyātvā kimityāha |",
  "SA23n2865:851": "kalpaṃ saṃtiṣṭhitīti",
  "SA23n2865:852": "sarvasattvamanorathasya kalpanaṃ saṃpādanaṃ kalpaḥ |",
  "SA23n2865:853": "tasmin tiṣṭhati āsaṃsāraṃ",
  "SA23n2865:854": "trikāyātmako bhūtvā sakalajagadabhipretārthasaṃpādanasamarthastiṣṭhatīti yāvat |",
  "SA23n2865:855": "samādhidvayamapyanenaiva vyākhyānena boddhavyam |",
  "SA23n2865:862": "trivajrakalpasamaya iti |",
  "SA23n2865:863": "kāyādivajraijaṃgadartha",
  "SA23n2865:864": "kalpayati saṃpādayatīti trivajrakalpasamayo mahāvajradharaḥ |",
  "SA23n2865:865": "yataḥ prabhṛtītyādyanuśaṃsā |",
  "SA23n2865:866": "imaṃ dvividhaṃ yogaṃ prāptabhiṣeko gurubhiranujñāto yataḥ prabhṛtyārabhya",
  "SA23n2865:867": "kāyavākcittavajriṇo mahāvajradharasya yaḥ paṭhe [ di ] ti yaḥparebhyaḥ upadiśet ,",
  "SA23n2865:868": "cintayediti yaḥ svayamabhyaset sa ca",
  "SA23n2865:869": "vajradharo bhavet |",
  "SA23n2865:870": "na kevalaṃ bhāvaka ityabhiprāyaḥ |",
  "SA23n2865:877": "sarvatathāgatamantrā omkārādayaḥ |",
  "SA23n2865:878": "tairniṣpannasamayo",
  "SA23n2865:879": "mahāvajradharaḥ |",
  "SA23n2865:880": "tadeva mantraparāyaṇānāṃ tattvaṃ vidyā prajñāpāramitā",
  "SA23n2865:881": "tatsamutthitapuruṣo vidyāpuruṣaḥ |",
  "SA23n2865:882": "sa eva jñānasamayatvāduttamaḥ",
  "SA23n2865:883": "sarvatathāgatamantrasamayatattvaṃ ca vidyāpuruṣottamaśca yasmin",
  "SA23n2865:884": "sarvatathāgatamantrasamayatattvavidyāpuruṣottamapaṭalaḥ |",
  "SA23n2865:885": "sandhyābhāṣā | ||",
  "SA23n2865:892": "pradīpodyotanaṭīkāyamekādaśapaṭale ṣaṭkoṭivyākhyā",
  "SA23n2865:893": " ||11 ||"
}