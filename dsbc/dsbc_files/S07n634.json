{
  "S07n634:0": "nyāyapraveśakasūtram",
  "S07n634:1": "sādhanaṃ dūṣaṇaṃ caiva sābhāsaṃ parasaṃvide |",
  "S07n634:2": "pratyakṣamanumānaṃ ca sābhāsaṃ tvātmasaṃvide ||-",
  "S07n634:3": "-iti śāstrārthasaṃgrahaḥ ||",
  "S07n634:4": "tatra pakṣādivacanāni sādhanam |",
  "S07n634:5": "pakṣahetudṛṣṭāntavacanairhi prāśnikānāmapratīto'rthaḥ pratipādyata iti ||",
  "S07n634:6": "tatra pakṣaḥ prasiddho dharmī prasiddhaviśeṣeṇa viśiṣṭatayā svayaṃ sādhyatvenepsitaḥ |",
  "S07n634:7": "pratyakṣadyaviruddha iti vākyaśeṣaḥ |",
  "S07n634:8": "tadyathā |",
  "S07n634:9": "nityaḥ śabdo'nityo veti ||",
  "S07n634:10": "hetustrirūpaḥ |",
  "S07n634:11": "kiṃ punastrairūpam |",
  "S07n634:12": "pakṣadharmatvaṃ sapakṣe sattvaṃ vipakṣe cāsattvamiti |",
  "S07n634:13": "kaḥ punaḥ sapakṣaḥ |",
  "S07n634:14": "ko vā vipakṣa iti ||",
  "S07n634:15": "sādhyadharmasāmānyena samano'rthaḥ sapakṣaḥ |",
  "S07n634:16": "tadyathā |",
  "S07n634:17": "anitye śabde sādhye ghaṭādiranityaḥ sapakṣaḥ ||",
  "S07n634:18": "vipakṣo yatra sādhyaṃ nāsti |",
  "S07n634:19": "yannityaṃ tadakṛtakaṃ dṛṣṭaṃ yathākāśamiti |",
  "S07n634:20": "tatra kṛtakatvaṃ prayatnānantarīyakatvaṃ vā sapakṣa evāsti vipakṣe nāstyeva |",
  "S07n634:21": "ityanityādau hetuḥ ||",
  "S07n634:22": "dṛṣṭānto dvividhaḥ |",
  "S07n634:23": "sādharmyeṇa vaidharmyeṇa ca ||",
  "S07n634:24": "tatra sādharmyeṇa tāvat |",
  "S07n634:25": "yatra hetoḥ sapakṣa evāstitvaṃ khyāpyate |",
  "S07n634:26": "tadyathā |",
  "S07n634:27": "yatkṛtakaṃ tadanityaṃ dṛṣṭaṃ yathā ghaṭādiriti ||",
  "S07n634:28": "vaidharmyeṇāpi |",
  "S07n634:29": "yatra sādhyābhāve hetorabhāva eva kathyate |",
  "S07n634:30": "tadyathā |",
  "S07n634:31": "yannityaṃ tadakṛtakaṃ dṛṣṭaṃ yathākāśamiti |",
  "S07n634:32": "nityaśabdenātrānityatvasyābhāva ucyate |",
  "S07n634:33": "akṛtakaśabdenāpi kṛtakatvasyābhāvaḥ |",
  "S07n634:34": "yathā bhāvābhāvo'bhāva iti ||",
  "S07n634:35": "uktāḥ pakṣādayaḥ ||",
  "S07n634:36": "eṣāṃ vacanāni parapratyāyanakāle sādhanam |",
  "S07n634:37": "tadyathā |",
  "S07n634:38": "anityaḥ śabda iti pakṣavacanam |",
  "S07n634:39": "kṛtakatvāditi pakṣadharmavacanam |",
  "S07n634:40": "yatkṛtakaṃ tadanityaṃ dṛṣṭaṃ yathā ghaṭādiriti sapakṣānugamavacanam |",
  "S07n634:41": "yannityaṃ tadakṛtakaṃ dṛṣṭaṃ yathākāśamiti vyatirekavacanam |",
  "S07n634:42": "etānyeva trayo'vayavā ityucyante |",
  "S07n634:43": "sādhayitumiṣṭo'pi pratyakṣādiviruddhaḥ pakṣābhāsaḥ |",
  "S07n634:44": "tadyathā |",
  "S07n634:45": "pratyakṣaviruddhaḥ 1,",
  "S07n634:46": "anumānaviruddhaḥ 2,",
  "S07n634:47": "āgamaviruddhaḥ 3,",
  "S07n634:48": "lokaviruddhaḥ 4,",
  "S07n634:49": "svavacanaviruddhaḥ 5,",
  "S07n634:50": "aprasiddhaviśeṣaṇaḥ 6,",
  "S07n634:51": "aprasiddhaviśeṣyaḥ 7,",
  "S07n634:52": "aprasiddhobhayaḥ 8,",
  "S07n634:53": "prasiddhasaṃbandhaśceti 9 ||",
  "S07n634:54": "tatra pratyakṣaviruddho yathā |",
  "S07n634:55": "aśrāvaṇaḥ śabda iti ||",
  "S07n634:56": "anumānaviruddho yathā |",
  "S07n634:57": "nityo ghaṭa iti ||",
  "S07n634:58": "āgamaviruddho yathā |",
  "S07n634:59": "vaiśeṣikasya nityaḥ śabda iti sādhayataḥ ||",
  "S07n634:60": "lokaviruddho yathā |",
  "S07n634:61": "śuci naraśiraḥkapālaṃ prāṇyaṅgatvācchaṅkhaśuktivaditi ||",
  "S07n634:62": "svavacanaviruddho yathā |",
  "S07n634:63": "mātā me vandhyeti |",
  "S07n634:64": "aprasiddhaviśeṣaṇo yathā bauddhasya sāṃkhyaṃ prati vināśī śabda iti ||",
  "S07n634:65": "aprasiddhaviśeṣyo yathā |",
  "S07n634:66": "sāṃkhyasya bauddhaṃ prati cetana ātmati ||",
  "S07n634:67": "aprasiddhobhayo yathā |",
  "S07n634:68": "vaiśeṣikasya bauddhaṃ prati sukhādisamavāyikāraṇamātmeti ||",
  "S07n634:69": "prasiddhasaṃbandho yathā |",
  "S07n634:70": "śrāvaṇaḥ śabda iti ||",
  "S07n634:71": "eṣāṃ vacanāni dharmasvarūpanirākaraṇamukhena pratipādanāsaṃbhavataḥ sādhanavaiphalyataśceti pratijñādoṣāḥ ||",
  "S07n634:72": "uktāḥ prakṣābhāsāḥ ||",
  "S07n634:73": "asiddhānaikāntikāviruddhā hetvābhāsāḥ ||",
  "S07n634:74": "tatrāsiddhaścatuḥprakāraḥ |",
  "S07n634:75": "tadyathā |",
  "S07n634:76": "ubhayāsiddhaḥ 1,",
  "S07n634:77": "anyatarāsiddhaḥ 2,",
  "S07n634:78": "saṃdigdhāsiddhaḥ 3,",
  "S07n634:79": "āśrayāsiddhaśceti 4 ||",
  "S07n634:80": "tatra śabdānityatve sādhye cākṣuṣātvādityubhayāsiddhaḥ ||",
  "S07n634:81": "kṛtakatvāditi śabdābhivyaktivādinaṃ pratyanyatarāsiddhaḥ ||",
  "S07n634:82": "bāṣpādibhāvena saṃdihyamāno bhūtasaṃghāto'gnisiddhāvupadiśyamānaḥ saṃdigdhāsiddhaḥ |",
  "S07n634:83": "dravamākāśaṃ guṇāśrayatvādityākāśāsattvavādinaṃ pratyāśrayāsiddhaḥ ||",
  "S07n634:84": "anaikāntikaḥ ṣaṭprakāraḥ |",
  "S07n634:85": "sādhāraṇaḥ 1,",
  "S07n634:86": "asādhāraṇaḥ 2,",
  "S07n634:87": "sapakṣaikadeśavṛttirvipakṣavyāpī 3,",
  "S07n634:88": "vipakṣaikadeśavṛttiḥ sapakṣavyāpī 4,",
  "S07n634:89": "ubhayapakṣaikadeśavṛttiḥ 5,",
  "S07n634:90": "viruddhāvyabhicārī ceti 6 ||",
  "S07n634:91": "tatra sādhāraṇaḥ śabdaḥ prameyatvānnitya iti |",
  "S07n634:92": "taddhi nityānityapakṣayoḥ sādhāraṇatvādanaikāntikam |",
  "S07n634:93": "kiṃ ghaṭavatprameyatvādanityaḥ śabda āhosvidākāśevatprameyatvānnitya iti ||",
  "S07n634:94": "asādhāraṇaḥ śrāvakaṇatvānnitya iti |",
  "S07n634:95": "taddhi nityānityapakṣābhyāṃ vyāvṛttatvānnityānityavinirmuktasya cānyasyāsaṃbhavātsaṃśayahetuḥ |",
  "S07n634:96": "kiṃbhūtasyāsya śrāvaṇatvamiti ||",
  "S07n634:97": "sapakṣaikadeśavṛttirvipakṣavyāpī yathā |",
  "S07n634:98": "aprayatnāntarīyakaḥ śabdo'nityatvāt |",
  "S07n634:99": "aprayatnānantarīyakaḥ pakṣaḥ |",
  "S07n634:100": "asya vidyudākāśādiḥ sapakṣaḥ |",
  "S07n634:101": "tatraikadeśe vidyudādau vidyate'nityatvaṃ nākāśādau |",
  "S07n634:102": "aprayatnānantarīyakaḥ pakṣaḥ |",
  "S07n634:103": "asya ghaṭādirvipakṣaḥ |",
  "S07n634:104": "tatra sarvatra ghaṭādau vidyate'nityatvam |",
  "S07n634:105": "tasmādetadapi vidyuddhaṭasādharmyeṇanaikāntikam |",
  "S07n634:106": "kiṃ ghaṭavadanityatvātprayatnānantarīyakaḥ śabdaḥ āhosvidvidyudādivadanityatvādprayatnānantarīyaka iti ||",
  "S07n634:107": "vipakṣaikadeśavṛttiḥ sapakṣavyāpī yathā |",
  "S07n634:108": "prayatnānantarīyakaḥ śabdo'nityatvāt |",
  "S07n634:109": "prayatnānantarīyakaḥ pakṣaḥ |",
  "S07n634:110": "asya ghaṭādiḥ sapakṣaḥ |",
  "S07n634:111": "tatra sarvatra ghaṭādau vidyate'nityatvam |",
  "S07n634:112": "prayatnānantarīyakaḥ pakṣaḥ |",
  "S07n634:113": "asya vidyudākāśādirvipakṣaḥ |",
  "S07n634:114": "tatraikadeśe vidyudādau vidyate'nityatvaṃ nākāśādau |",
  "S07n634:115": "tasmādetadapi vidyuddhaṭasādharmyeṇa pūrvavadanaikāntikam ||",
  "S07n634:116": "ubhayapakṣaikadeśavṛttiryathā |",
  "S07n634:117": "nityaḥ śabdo'mūrtatvāditi |",
  "S07n634:118": "nityaḥ pakṣaḥ |",
  "S07n634:119": "asyākāśaparamāṇvādiḥ sapakṣaḥ |",
  "S07n634:120": "tatraikadeśa ākāśādau vidyate'mūrtatvaṃ na paramāṇau |",
  "S07n634:121": "nityaḥ pakṣaḥ |",
  "S07n634:122": "asya ghaṭasukhādirvipakṣaḥ |",
  "S07n634:123": "tratraikadeśe sukhādau vidyate'mūrtatvaṃ na ghaṭādau |",
  "S07n634:124": "tasmādetadapi sukhākāśasādharmyeṇānaikāntikam ||",
  "S07n634:125": "viruddhāvyabhicārī yathā |",
  "S07n634:126": "anityaḥ śabdaḥ kṛtakatvād ghaṭavat |",
  "S07n634:127": "nityaḥ śabdaḥ śrāvaṇatvāt śabdatvavaditi |",
  "S07n634:128": "ubhayoḥ saṃśayahetutvād dvāvapyetāveko'naikāntikaḥ samuditāveva ||",
  "S07n634:129": "viruddhaścatuḥprakāraḥ |",
  "S07n634:130": "tadyathā |",
  "S07n634:131": "dharmasvarūpaviparītasādhanaḥ 1,",
  "S07n634:132": "dharmaviśeṣaviparītasādhanaḥ 2,",
  "S07n634:133": "dharmisvarūpaviparītasādhanaḥ 3,",
  "S07n634:134": "dharmiviśeṣaviparītasādhanaśceti 4 ||",
  "S07n634:135": "tatra dharmasvarūpaviparitisādhano yathā |",
  "S07n634:136": "nityaḥ śabdaḥ kṛtakatvāt prayatnānantarīyakatvāddheti |",
  "S07n634:137": "ayaṃ heturvipakṣa eva bhāvādviruddhaḥ ||",
  "S07n634:138": "dharmaviśeṣaviparītasādhano yathā |",
  "S07n634:139": "parārthāścakṣurādayaḥ saṃghātatvācchayanāsanādyaṅgaviśeṣavaditi |",
  "S07n634:140": "ayaṃ heturyathā pārārthyaṃ cakṣurādīnāṃ sādhayati tathā saṃhatatvamapi parasyātmanaḥ sādhayati |",
  "S07n634:141": "ubhayatrāvyabhicārāt ||",
  "S07n634:142": "dharmisvarūpaviparītasādhano yathā |",
  "S07n634:143": "na dravyaṃ na karma na guṇo bhāvaḥ ekadravyavattvāt guṇakarmasu ca bhāvāt sāmanyaviśeṣavaditi |",
  "S07n634:144": "ayaṃ hi heturyathā dravyādipratiṣedhaṃ bhāvasya sādhayati tathā bhāvasyābhāvatvamapi sādhayati |",
  "S07n634:145": "ubhayatrāvyabhicārāt ||",
  "S07n634:146": "dharmiviśeṣaviparītasādhano yathā |",
  "S07n634:147": "ayameva heturasminneva pūrvapakṣe'syaiva dharmiṇo yo viśeṣaḥ satpratyakartṛtvaṃ nāma tadviparītamasatpratyayakartṛtvamapi sādhayati |",
  "S07n634:148": "ubhayatrāvyabhicārāt ||",
  "S07n634:149": "dṛṣṭāntābhāso dvividhaḥ |",
  "S07n634:150": "sādharmyeṇa vaidharmyeṇa ca ||",
  "S07n634:151": "tatra sādharmyeṇa tāvad dṛṣṭāntābhāsaḥ pañcaprakāraḥ |",
  "S07n634:152": "tadyathā |",
  "S07n634:153": "sādhanadharmāsiddhaḥ 1,",
  "S07n634:154": "sādhyadharmāsiddhaḥ 2,",
  "S07n634:155": "ubhayadharmāsiddhaḥ 3,",
  "S07n634:156": "ananvayaḥ 4,",
  "S07n634:157": "viparītānvayaśceti 5 ||",
  "S07n634:158": "tatra sādhanadharmāsiddho yathā |",
  "S07n634:159": "nityaḥ śabdo'mūrtatvāt paramāṇuvat |",
  "S07n634:160": "yadamūrta tannityaṃ dṛṣṭaṃ yathā paramāṇauḥ |",
  "S07n634:161": "paramāṇu hi sādhyaṃ nityatvamasti sādhanadharmo'mūrtatvaṃ nāsti mūrtatvātparamāṇūnāmiti ||",
  "S07n634:162": "sādhyadharmāsiddho yathā |",
  "S07n634:163": "nityaḥ śabdo'mūrtatvād buddhivat |",
  "S07n634:164": "yadamurtaṃ tannityaṃ dṛṣṭaṃ yathā buddhiḥ ||",
  "S07n634:165": "buddhau hi sādhanadharmo'mūrtatvamasti sādhyadharmo nityatvaṃ nāsti |",
  "S07n634:166": "anityatvād buddheriti ||",
  "S07n634:167": "ubhayāsiddho dvividhaḥ |",
  "S07n634:168": "sannasaṃśceti |",
  "S07n634:169": "tatra ghaṭavaditi vidyamānobhayāsiddhaḥ |",
  "S07n634:170": "anityatvānmūrtatvācca ghaṭasya |",
  "S07n634:171": "ākāśavadityavidyamānobhayāsiddhaḥ |",
  "S07n634:172": "tadasattvavādinaṃ prati ||",
  "S07n634:173": "ananvayo yatra vinānvayena sādhyasādhanayoḥ sahabhāvaḥ pradarśyate |",
  "S07n634:174": "yathā ghaṭe kṛtakatvamanityatvaṃ ca dṛṣṭamiti ||",
  "S07n634:175": "viparītānvayo yathā |",
  "S07n634:176": "yat kṛtakaṃ tadanityaṃ dṛṣṭamiti vaktavye yadanityaṃ tatkṛtakaṃ dṛṣṭamiti vravīti ||",
  "S07n634:177": "vaidharmyeṇāpi dṛṣṭāntābhāsaḥ pañcaprakāraḥ |",
  "S07n634:178": "tadyathā |",
  "S07n634:179": "sādhyāvyāvṛttaḥ 1,",
  "S07n634:180": "sādhanāvyāvṛttaḥ 2,",
  "S07n634:181": "ubhayāvyāvṛttaḥ 3,",
  "S07n634:182": "avyatirekaḥ 4,",
  "S07n634:183": "viparītavyatirekaśceti 5 ||",
  "S07n634:184": "tatra sādhyāvyāvṛtto yathā |",
  "S07n634:185": "nityaḥ śabdo'mūrtatvāt paramāṇuvat |",
  "S07n634:186": "yadanityaṃ tanmurtaṃ dṛṣṭaṃ yathā paramāṇuḥ |",
  "S07n634:187": "paramāṇorhi sādhānadharmo'mūrtatvaṃ vyāvṛttaṃ mūrtatvātparamāṇunāmiti |",
  "S07n634:188": "sādhyadharmo nityatvaṃ na vyāvṛttaṃ nityatvātparamāṇūnāmiti ||",
  "S07n634:189": "sādhānāvyāvṛtto yathā |",
  "S07n634:190": "karmavaditi |",
  "S07n634:191": "karmaṇaḥ sādhyaṃ nityatvaṃ vyāvṛttam |",
  "S07n634:192": "anityatvātkarmaṇāḥ |",
  "S07n634:193": "sādhanadharmo'mūrtatvaṃ na vyāvṛttam |",
  "S07n634:194": "amūrtatvātkarmaṇaḥ ||",
  "S07n634:195": "ubhayāvyāvṛttaḥ |",
  "S07n634:196": "ākāśavaditi |",
  "S07n634:197": "tatsattvavādinaṃ prati |",
  "S07n634:198": "tato nityatvamamūrtatvaṃ ca na vyāvṛttam |",
  "S07n634:199": "nityatvādamūrtatvāccākāśasyeti ||",
  "S07n634:200": "avyatireko yatra vinā sādhyasādhananivṛttyā taddhipakṣabhāvo nidarśyate |",
  "S07n634:201": "yathā ghaṭe mūrtatvamanityatvaṃ ca dṛṣṭamiti ||",
  "S07n634:202": "viparītavyatireko yathā |",
  "S07n634:203": "yadanityaṃ tanmūrtaṃ dṛṣṭamiti vaktavye yanmūrtaṃ tadanityaṃ dṛṣṭamiti bravīti ||",
  "S07n634:204": "eṣāṃ pakṣahetudṛṣṭāntābhāsānāṃ vacanāni sādhanābhāsam ||",
  "S07n634:205": "ātmapratyāyanārthaṃ tu pratyakṣamanumānaṃ ca dve eva pramāṇe ||",
  "S07n634:206": "tatra pratyakṣaṃ kalpanāpoḍhaṃ yajjñānamarthe rūpādau nāmajātyādikalpanārahitam |",
  "S07n634:207": "tadakṣamakṣaṃ prati vartata iti pratyakṣam ||",
  "S07n634:208": "anumānaṃ liṅgādarthadarśanam |",
  "S07n634:209": "liṅgaṃ punastrirūpamuktam |",
  "S07n634:210": "tasmādyadanumeye'rthe jñānamutpadyate'gniratra anityaḥ śabda iti vā tadanumānam ||",
  "S07n634:211": "ubhayatra tadeva jñānaṃ phalamadhigamarūpatvāt |",
  "S07n634:212": "savyāpāravatkhyāteḥ pramāṇatvamiti ||",
  "S07n634:213": "kalpanājñānamarthāntare pratyakṣābhāsam |",
  "S07n634:214": "yajjñānaṃ ghaṭaḥ paṭa iti vā vikalpayataḥ samutpadyate tadarthasvalakṣaṇaviṣayatvātpratyakṣābhāsam ||",
  "S07n634:215": "hetvābhāsapūrvakaṃ jñānamanumānābhāsam |",
  "S07n634:216": "hetvābhāso hi bahuprakāra uktaḥ |",
  "S07n634:217": "tasmādyadanumeye'rthe jñānamavyutpannasya bhavati tadanumānābhāsam ||",
  "S07n634:218": "sādhanadoṣodbhāvanāni dūṣaṇāni ||",
  "S07n634:219": "sādhanadoṣo nyūnatvam |",
  "S07n634:220": "pakṣadoṣaḥ pratyakṣādiviruddhatvam |",
  "S07n634:221": "hetudoṣo'siddhānaikāntikaviruddhatvam |",
  "S07n634:222": "dṛṣṭāntadoṣaḥ sādhanadharmādyasiddhatvam |",
  "S07n634:223": "tasyodbhāvanaṃ prāsnikapratyāyanaṃ dūṣaṇam ||",
  "S07n634:224": "abhūtasādhanadoṣobhdāvanāni dūṣaṇābhāsāni ||",
  "S07n634:225": "saṃpūrṇe sādhane nyūnatvavacanam |",
  "S07n634:226": "aduṣṭapakṣe pakṣadoṣavacanam |",
  "S07n634:227": "siddhahetuke'siddhahetukaṃ vacanam |",
  "S07n634:228": "ekāntahetuke'nekāntahetukaṃ vacanam |",
  "S07n634:229": "aviruddhahetuke viruddhahetukaṃ vacanam |",
  "S07n634:230": "aduṣṭadṛṣṭānte dṛṣṭadṛṣṭāntadoṣavacanam |",
  "S07n634:231": "etāni dūṣaṇābhāsāni |",
  "S07n634:232": "na hyebhiḥ parapakṣo dūṣyate |",
  "S07n634:233": "niravadyatvāttasya ||",
  "S07n634:234": "ityuparamyate ||",
  "S07n634:235": "padārthamātramākhyātamādau diṅmātrasiddhaye |",
  "S07n634:236": "yātra yuktiyuktirvā sānyatra suvicāritā ||",
  "S07n634:237": " ||iti nyāyapraveśakasūtraṃ samāptam ||"
}