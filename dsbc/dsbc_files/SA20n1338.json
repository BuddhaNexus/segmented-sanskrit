{
  "SA20n1338:0": "pratipakṣabhāvanā'vasthāphalaparicchedaścaturthaḥ",
  "SA20n1338:1": "dauṣṭhulyāt tarṣahetutvād vastutvādavimohataḥ |",
  "SA20n1338:2": "catussatyāvatārāya smṛtyupasthānabhāvanā ||1 ||",
  "SA20n1338:3": "parijñāte vipakṣe ca pratipakṣe ca sarvathā |",
  "SA20n1338:4": "tadapāyāya vīryaṃ hi caturdhā sampravartate ||2 ||",
  "SA20n1338:5": "karmaṇyatā sthitestatra sarvārthānāṃ samṛddhaye |",
  "SA20n1338:6": "pañcadoṣaprahāṇā'ṣṭasaṃskārāsevanā'nvayā ||3 ||",
  "SA20n1338:7": "kausīdyamavavādasya sammoṣo laya uddhavaḥ |",
  "SA20n1338:8": "asaṃskāro'tha saṃskāraḥ pañca doṣā ime matāḥ ||4 ||",
  "SA20n1338:9": "āśrayo'thāśritastasya nimittaṃ phalameva ca |",
  "SA20n1338:10": "ālambane'sammoṣo layauddhatyānubuddhyanā ||5 ||",
  "SA20n1338:11": "tadapāyā'bhisaṃskāraḥ śāntau praśaṭhavāhitā |",
  "SA20n1338:12": "ropite mokṣabhāgīye cchandayogādhipatyataḥ ||6 ||",
  "SA20n1338:13": "ālambane'sammoṣāvisāravicayasya ca |",
  "SA20n1338:14": "vipakṣasya hi saṃlekhāt pūrvasya phalamuttaram ||7 ||",
  "SA20n1338:15": "dvau dvau nirvedhabhāgīyāvindriyāṇi balāni ca |",
  "SA20n1338:16": "āśrayāṅgaṃ svabhāvāṅgaṃ niryāṇāṅgaṃ tṛtīyakam ||8 ||",
  "SA20n1338:17": "caturthamanuśaṃsāṅgaṃ niḥkleśāṅgaṃ tridhā matam |",
  "SA20n1338:18": "nidānenāśrayeṇeha svabhāvena ca deśitam ||9 ||",
  "SA20n1338:19": "paricchedo'tha samprāptiḥ parasambhāvanā tridhā |",
  "SA20n1338:20": "vipakṣapratipakṣaśca mārgasyāṅgaṃ tadaṣṭadhā ||10 ||",
  "SA20n1338:21": "dṛṣṭau śīle'tha saṃlekhe paravijñaptiriṣyate |",
  "SA20n1338:22": "kleśopakleśavaibhutvavipakṣapratipakṣatā ||11 ||",
  "SA20n1338:23": "anukūlā viparyastā sānubandhā viparyayā |",
  "SA20n1338:24": "aviparyastaviparyāsā'nanubandha ca bhāvanā ||12 ||",
  "SA20n1338:25": "ālambanamanaskāraprāptitastad viśiṣṭatā |",
  "SA20n1338:26": "hetvavasthā'vatārākhyā prayogaphalasaṃjñitā ||13 ||",
  "SA20n1338:27": "kāryākāryaviśiṣṭā ca uttarā'nuttarā ca sā |",
  "SA20n1338:28": "adhimuktau praveśe ca niryāṇe vyākṛtāvapi ||14 ||",
  "SA20n1338:29": "kathikatve'bhiṣeke ca samprāptāvanuśaṃsane |",
  "SA20n1338:30": "kṛtyānuṣṭhāna uddiṣṭā dharmādhātau tridhā punaḥ ||15 ||",
  "SA20n1338:31": "aśuddhāśuddhaśuddhā ca viśuddhā ca yathārthataḥ |",
  "SA20n1338:32": "pudgalānāṃ vyavasthānaṃ yathāyogamato matam ||16 ||",
  "SA20n1338:33": "bhājanatvaṃ vipākākhyaṃ balantasyādhipatyataḥ |",
  "SA20n1338:34": "rucirvṛddhirviśuddhiśca phalametad yathākramam ||17 ||",
  "SA20n1338:35": "uttarottaramādyañca tadabhyāsat samāptitaḥ |",
  "SA20n1338:36": "ānukūlyād vipakṣācca visaṃyogād viśeṣataḥ ||18 ||",
  "SA20n1338:37": "uttarā'nuttaratvācca phalamanyat samāsataḥ |",
  "SA20n1338:38": " ||iti pratipakṣabhāvanādiparicchedaścaturthaḥ ||"
}