{
    "381:0": "18. sarva sabhāloka saddharma śravaṇotsāha saṃpramodita svasvālaya pratigamana prakaraṇam",
    "381:1": "atha sarvanīvaraṇaviṣkambhi sa pramoditaḥ|",
    "381:2": "bhagavantaṃ tamānamya sāṃjalirevabravīt||",
    "381:3": "bhagavannadya sa dṛṣṭo lokeśvaro'dhunā mayā|",
    "381:4": "tadasmi pariśuddhātmā saddharmaprāptavānapi||",
    "381:5": "adya me janmasāfalyaṃ saṃsiddhaśca manorathaḥ|",
    "381:6": "258",
    "381:7": "āśā sampūrṇasiddhā ca sambodhiṃ prāptavān bhave||",
    "381:8": "bhūyo'pi bhagavannasya lokeśasya mahātmanaḥ|",
    "381:9": "guṇaviśeṣasatkīrtiṃ śrotumicchāmi sāmpratam||",
    "381:10": "tadbhavān sarvasattvānāṃ sambodhivratacāriṇām|",
    "381:11": "manaḥ protsāhanaṃ kartuṃ samupādeṣṭumarhati||",
    "381:12": "iti saṃprārthite tena viṣkambhinā sa sarvavit|",
    "381:13": "bhagavāṃstaṃ mahāsattvaṃ saṃpaśyannevamādiśat||",
    "381:14": "sādhu śṛṇu mahāsattva kulaputra samāhitaḥ|",
    "381:15": "lokeśaguṇasatkīrtiṃ pravakṣyāmi samāsataḥ||",
    "381:16": "aprameyasaṃkhyeyaṃ lokeśasya mahātmanaḥ|",
    "381:17": "puṇyaguṇapramāṇāni kartuṃ na śakyate mayā||",
    "381:18": "tadyathā sarvalokeṣu sarveṣāmapi bhūbhṛtām|",
    "381:19": "palasaṃkhayāprāmāṇāni kartuṃ mayāpi śakyate||",
    "381:20": "saparvatā mahī sarvā kṛtvāyaṇurajomayā|",
    "381:21": "teṣāṃ saṃkhyāpramāṇāni kartuṃ mayā hi śakyate||",
    "381:22": "sarveṣāmapi cābdhīnāṃ sarvāsāṃ saritāmapi|",
    "381:23": "jalabindupramāṇāni saṃkhyātuṃ śakyate mayā||",
    "381:24": "sarveṣāmapi vṛkṣāṇāṃ sarvatrāpi mahīruhām|",
    "381:25": "patrasaṃkhyāpramāṇāni prakartuṃ śakyate mayā||",
    "381:26": "na tvasya lokanāthasya puṇyasaṃbhāramuttamam|",
    "381:27": "apreyamasaṃkhyeyaṃ saṃkhyātuṃ śakyate mayā||",
    "381:28": "sarve sattvāśca saṃbuddhān sarvānapi sasāṃghikān|",
    "381:29": "sarvopakaraṇairnityaṃ saṃbhājeran samādaram||",
    "381:30": "yāvatteṣāṃ mahatpuṇyaṃ bodhiśrīguṇasādhanam|",
    "381:31": "tato'pyadhikamaudāryaṃ lokeśabhajanodbhavam||",
    "381:32": "yadasau trijagannātho bodhisattvo maharddhimān|",
    "381:33": "sarvasamādhisapannaḥ prakaroti jagaddhite||",
    "381:34": "īdṛśastrijagannātho bodhisattvo maharddhikaḥ|",
    "381:35": "259",
    "381:36": "sarvasamādhisampannastrailokye nāsti kaścana||",
    "381:37": "tadyathāhaṃ purādrākṣamasya traidhātukaprabhoḥ|",
    "381:38": "samādhiguṇamāhātmyaṃ sarvajinātmajādhikam||",
    "381:39": "tadyathābhūtpurā śāstā krakucchandastathāgataḥ|",
    "381:40": "sarvavidyādhipo dharmarājo'rhat sugato jinaḥ|",
    "381:41": "tadāhaṃ dānaśūrākhyo bodhisattvo hitārthabhṛt||",
    "381:42": "tasya śāsturmunīndrasya saddharmaśāsanārataḥ||",
    "381:43": "tadaikasamaye'sau'pi krakucchando vināyakaḥ|",
    "381:44": "jetāśrame vihāre'tra vijahāra sasāṃdhikaḥ||",
    "381:45": "tadā tasya munīndrasya pātuṃ dharmāmṛtaṃ mudā|",
    "381:46": "brahmādibrāhmaṇāḥ sarve śakrāditridaśādhipāḥ||",
    "381:47": "sarve lokādhipāścāpi daityendrā rākṣasādhipāḥ|",
    "381:48": "gandharvāḥ kinnarā yakṣā nāgendrā garuḍādhipāḥ||",
    "381:49": "sūryādayo grahāḥ sarve candrādayaśca tārakāḥ|",
    "381:50": "siddhāḥ sādhyāśca rudrāśca sarve vidyādharā api||",
    "381:51": "rājānaḥ kṣatriyā vaiśyā amātyā mantriṇo janāḥ|",
    "381:52": "vaṇijaḥ sārthavāhāśca śreṣṭhinaśca mahājanāḥ||",
    "381:53": "paurajānapadā grāmyāstathānye deśavāsinaḥ|",
    "381:54": "sarve'pi te samāsṛtya samabhyarcya yathākramam||",
    "381:55": "krakucchandamunīndraṃ taṃ natvā tasthuḥ sabhāśritāḥ|",
    "381:56": "tadānekamahāsattvā bodhisattvāḥ samāhitāḥ||",
    "381:57": "samādhivigrahaṃ cakruḥkrakucchandamuneḥ puraḥ||",
    "381:58": "yadā samantabhadrākhyo bodhisattvo maharddhimān|",
    "381:59": "samāpede samādhiṃ tadyaddhvajodgatasaṃjñakam||",
    "381:60": "tadā lokeśvaraścāsau bodhisattvo maharddhikaḥ|",
    "381:61": "samāpede samādhiṃ tadyadvikiriṇasaṃjñakam||",
    "381:62": "yadā samantabhadraśca bodhisattvo jinātmajaḥ|",
    "381:63": "samāpede samādhiṃ tadyatpūrṇenduvaralocanam||",
    "381:64": "260",
    "381:65": "tadā lokeśvaraścāsau mahābhijño jinātmajaḥ|",
    "381:66": "samāpede samādhiṃ tadyatsuryavaralocanam||",
    "381:67": "yadā samantabhadraśca mahābhijño jinātmajaḥ|",
    "381:68": "samādhiṃ tatsamāpede yadvicchuritasaṃjñakam||",
    "381:69": "tadā lokeśvaraścāpi mahābhijño jinātmajaḥ|",
    "381:70": "samāpede samādhiṃ yad gaganagaṃjasaṃjñakam||",
    "381:71": "yadā samantabhadraśca bodhisattvo mahāmatiḥ|",
    "381:72": "samāpede samādhiṃ tatsarvākārakarābhidham||",
    "381:73": "tadā lokeśvaraścāpi bodhisattvo mahāmatiḥ|",
    "381:74": "samāpeded samādhiṃ yadindramatyabhidhānakam||",
    "381:75": "yadā samantabhadraśca bodhisattvo guṇākaraḥ|",
    "381:76": "samāpede samādhiṃ yadindrarājo'bhidhānakam||",
    "381:77": "tadā lokeśvaraścāsau bodhisattvo guṇākaraḥ|",
    "381:78": "samāpede samādhiṃ yadabdhigambhīrasaṃjñakam||",
    "381:79": "yadā samantabhadraśca bodhisattvaḥ suvīryavān|",
    "381:80": "samāpede samādhiṃ yatsihaṃvijṛmbhitāhvayam||",
    "381:81": "tadā lokeśvaraścāpi bodhisāttvaḥ suvīryavān|",
    "381:82": "samāpede samādhiṃ yatsihavikrīḍitābhidham||",
    "381:83": "yadā samantabhadraśca bodhisattvaḥ subuddhimān|",
    "381:84": "samāpede samādhiṃ yadvaradāyakasaṃjñakam||",
    "381:85": "tadā lokeścaraścāpi bodhisattvaḥ subuddhimān|",
    "381:86": "samāpede samādhiṃ tadyadavīcyabhiśoṣaṇam||",
    "381:87": "yadā samantabhadraśca bodhisattvo vicakṣaṇaḥ|",
    "381:88": "udghāṭya darśayāmāsa sarvalomavilānyapi||",
    "381:89": "tadā lokeśvaraścāpi bodhisattvo vicakṣaṇaḥ|",
    "381:90": "apāvṛṇot sa sarvāṇi lomarandhrāṇyaśeṣataḥ||",
    "381:91": "tadā samantabhadro'sau lokeśaṃ taṃ mahardhikam|",
    "381:92": "samīkṣya sāṃjalirnatvā saṃpaśyannevamabravīt||",
    "381:93": "261",
    "381:94": "sādhu dhanyo'si lokeśa yadīdṛkpratibhānavān|",
    "381:95": "kaścinnaivāsti lokeṣu tvādṛksamādhivit sudhiḥ||",
    "381:96": "evamanyairmahāsattvairbodhisattvairmahaddhikaiḥ|",
    "381:97": "smādhivigrahe saiva lokeśvaro vijitavān||",
    "381:98": "tadā sarve mahābhijña bodhisattvāḥ prasāditāḥ|",
    "381:99": "lokeśaṃ taṃ mahābhijñaṃ samānamyaivamabravan||",
    "381:100": "sādhu dhanyo'si lokeśa yadīdṛkpratibhānavān|",
    "381:101": "kaścinnaivāsti looke yattvādṛksamādhisadbalī||",
    "381:102": "tadā sa bhagavān dṛṣṭvā sarvāṃstān sugatātmajān|",
    "381:103": "purataḥ samupāmantrya saṃpaśyannevamādiśat||",
    "381:104": "kulaputrālpamevaitat pratibhānaṃ jagatprabhoḥ|",
    "381:105": "lokeśasyāsya yuṣmābhirdṛśyate'pīha sāmpratam||",
    "381:106": "yādṛglokeśvarasyāsya pratibhānaṃ mahattaram|",
    "381:107": "īdṛksarvamunīndrāṇāmapi naivāsti kasyacit||",
    "381:108": "evaṃ tasya jagadbhartuḥ pratibhānaṃ mahattaram|",
    "381:109": "krakucchandamunīndreaṇa samākhyātaṃ mayā śrutam||",
    "381:110": "atha sarvanīvaraṇaviṣkambhī sa prabodhitaḥ|",
    "381:111": "bhagavantaṃ munīndraṃ ca samālokyaivamabravīt||",
    "381:112": "bhagavan yanmahāyānasūtrarājaṃ nigadyate|",
    "381:113": "tatsamādiśa kāraṇḍavyūhasūtrodbhavaṃ vṛṣam||",
    "381:114": "yacchrutvāpi vayaṃ sarve sambodhiguṇasādhanaiḥ|",
    "381:115": "dharmarasaurabhivyāptamānasāḥ pracaremahi||",
    "381:116": "tacchrutvā bhagavāṃścāpi viṣkambhinaṃ mahāmatim|",
    "381:117": "sādhu śṛṇu samādhāya vakṣye taditi prādiśat||",
    "381:118": "ye'pi śroṣyanti kāraṇḍavyūhasūtraṃ subhāṣitam|",
    "381:119": "teṣāṃ sarvāṇi pāpāni kṣiṇuyurdāruṇānyapi||",
    "381:120": "daśākuśalapāpāni paṃcātipātakānyapi|",
    "381:121": "niravaśeṣanaṣṭāni kṣiṇuyuriti niścayam||",
    "381:122": "262",
    "381:123": "ityādiṣṭe munīndreṇa viṣkambhī saṃpramoditaḥ|",
    "381:124": "bhagavantaṃ samālokya punarevamabhāṣata||",
    "381:125": "bhagavan sarvaviccchāsta jānīmahi kathaṃ vayam|",
    "381:126": "yatpāpaṃ kurute kṣīṇaṃ kāraṇḍanyūhasūtrakam||",
    "381:127": "tacchrutvā bhagavān bhūyo viṣkambhinaṃ vibodhitam|",
    "381:128": "sabhāśritān janāṃścāpi samālokyaivamādiśat||",
    "381:129": "vidyate kulaputrāsau tīrtho malasunirmalau|",
    "381:130": "sumerordakṣiṇe pārśve munīndraiḥ parikalpitau||",
    "381:131": "malatīrthajale kṣiptaṃ śubhravāso'pi nīlitam|",
    "381:132": "tathā tajjalasaṃspṛṣṭo śuddho'pi nīlito bhavet||",
    "381:133": "sunirmale jale kṣiptaṃ nīlavāso'pi śuklitam|",
    "381:134": "tathā tajjalasaṃspṛṣṭaḥ pāpātmāpi bhavecchuciḥ||",
    "381:135": "evamidaṃ mahāyānasūtrāgraṃ yo'bhinandati|",
    "381:136": "saddharmalipto'pi kleśaiḥ saṃkliśyate drutam||",
    "381:137": "śrutvāpīdaṃ mahāyānasūtrāgraṃ yo'bhinandati|",
    "381:138": "sa mahāpāpalipto'pi niḥkleśaḥ syācchubhāntikaḥ||",
    "381:139": "yathā śatamukho hīndro vinisṛtya nijālayāt|",
    "381:140": "dahati sarvabhūjātān tṛṇagulmalatādrumān||",
    "381:141": "tathedaṃ sarvasūtrāṇāṃ kāraṇḍavyūhamuttamam|",
    "381:142": "pātakānyapi sarvāṇi niḥśeṣaṃ dahate drutam||",
    "381:143": "ye śrutvedaṃ mahāyānasūtrarājaṃ subhāṣitam|",
    "381:144": "anumodyābhinandantaḥ saṃbhajante sadādarāt||",
    "381:145": "te sarve nirmalātmāno niḥkleśavimalendriyāḥ|",
    "381:146": "bodhisattvā mahāsattvā bhaveyurnivartikāḥ||",
    "381:147": "idaṃ sarvamahāyānasūtrarājaṃ mahottamam|",
    "381:148": "śrutvā naivānumodeyuḥ pṛthagjanā durāśayāḥ||",
    "381:149": "ye cāpīdaṃ mahāyānasūtrarājaṃ mahottamam|",
    "381:150": "niśamyābhyanumodantaḥ prabhajante sadādarāt||",
    "381:151": "263",
    "381:152": "dhanyāste puruṣāḥ sarve pariśuddhatrimaṇḍalāḥ|",
    "381:153": "niḥkleśā nirmalātmāno bhaveyuḥ sugatātmajāḥ||",
    "381:154": "mṛtyukāle'pi teṣāṃ ca dvādaśa sugatā jināḥ|",
    "381:155": "samupetyābhipaśyanto dadyurevaṃ varottamam||",
    "381:156": "mā bhaiṣīḥ kulaputra tvaṃ yatkāraṇḍavyūhasūtrakam|",
    "381:157": "śrutvānumodya satkārairbhajase śraddhayādarāt||",
    "381:158": "etatpuṇyānuliptātmā bhūyo na saṃsarerbhave|",
    "381:159": "naiva kleśāgnisaṃtāpaiḥ saṃdhakṣyase kadācana||",
    "381:160": "yāvajjīvaṃ mahatsaukhyaṃ bhuktā śrīsadguṇānvitam|",
    "381:161": "bhūyo dharmāmṛtaṃ bhoktuṃ saṃprayāyāḥ sukhāvatīm||",
    "381:162": "tatra tvamamitābhasya jinasya śaraṇe sthitaḥ|",
    "381:163": "sadā dharmāmṛtaṃ pītvā saṃcarethāḥ susaṃvare||",
    "381:164": "tato nirmalaśuddhātmā pariśuddhatrimaṇḍalaḥ|",
    "381:165": "sarvasattvahitādhanabodhicaryāvrataṃ careḥ||",
    "381:166": "tataḥ pāramitāḥ sarvāḥ pūrayitvā yathākramam|",
    "381:167": "niḥkleśo'rhanmahābhijñaścaturbrahmavihārikaḥ||",
    "381:168": "jitvā māragaṇān sarvān sambodhiniścalāśayaḥ|",
    "381:169": "trividhāṃ bodhimāsādya saṃbuddhapadamāpnuyāḥ||",
    "381:170": "iti taiḥ sugataiḥ sarvaiḥ samādiṣṭaṃ niśamya te|",
    "381:171": "sarve'pyubhyanumodanto nameyustān jinān muhuḥ||",
    "381:172": "tataste tān jinān smṛtvā prāṇaṃ tyaktvā samāhitāḥ|",
    "381:173": "taireva sugataiḥ sārdhaṃ saṃprayāyuḥ sukhāvatīm||",
    "381:174": "tatropetyāmitābhasya śaraṇe samupāśritāḥ|",
    "381:175": "sadā dharmāmṛtaṃ pītvā saṃcareyurjaddhite||",
    "381:176": "tataḥ sambodhisaṃbhāraṃ pūrayitvā yathākramam|",
    "381:177": "niḥkleśā nirmalātmānaḥ pariśuddhatrimaṇḍalāḥ||",
    "381:178": "jitvā māragaṇān sarvāṃścaturbrahmavihāriṇaḥ|",
    "381:179": "trividhāṃ bodhimāsādya saṃbuddhapadamāpnuyuḥ||",
    "381:180": "264",
    "381:181": "evaṃ mahattaraṃ puṇyaṃ kāraṇḍavyūhasūtrajam|",
    "381:182": "aprameyamasaṃkhyeyaṃ saṃbodhijñānasādhanam||",
    "381:183": "yūyaṃ sarve'pi vijñāya saṃbodhiṃ yadi vāṃcchatha|",
    "381:184": "śṛṇutedaṃ mahāyānasūtrarājaṃ subhāṣitam||",
    "381:185": "anumodata satkṛtya bhajana sarvadādarāt|",
    "381:186": "ityādiṣṭaṃ munīndreṇa niśamya te sabhāśritāḥ|",
    "381:187": "sarve lokāstathetyuktvā prābhyanandan prabodhitāḥ||",
    "381:188": "tataste sarve sabhālokā brahmādayo maharṣayaḥ|",
    "381:189": "śakrādayaḥ surendrāśca sarvalokādhipā api||",
    "381:190": "gandharvakiṃnarā rakṣāḥ siddhāḥ sādhyāḥ surāṃganāḥ|",
    "381:191": "vidyādharāśca daityendrā nāgendrā garuḍā api||",
    "381:192": "mahoragāśca daityendra nāgendrā garuḍā api||",
    "381:193": "mahoragāśca nairṛtyā bhūteśāśca śubhāśayāḥ|",
    "381:194": "yogino yatinaścāpi tīrthikāśca tapasvinaḥ||",
    "381:195": "viprarājādayaḥ sarve manuṣyāśca prasāditāḥ|",
    "381:196": "tridhā pradakṣiṇīkṛya kṛtāṃjalipuṭo mudā||",
    "381:197": "bhagavantaṃ sasaṃghaṃ taṃ natvā svasvālayaṃ yayuḥ||",
    "381:198": "||iti sarvasabhālokasaddharmaśravaṇotsāhasaṃpramoditasvasvālayapratigamanaprakaraṇaṃ samāptam||"
}