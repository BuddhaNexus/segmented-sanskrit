{
    "980:0": "atha tṛtīyam udānam",
    "980:1": "(karuṇā-dāna-śīlāni kṣāntirvīryamathāpi ca |",
    "980:2": "dhyānaṃ prajñā'tha nirvāṇo mano bhikṣuśca te daśa || )",
    "980:3": "(21) karuṇāvargaḥ",
    "980:4": "karuṇā māteva hitakāriṇī bhavati",
    "980:5": "kṛpā sarveṣu bhūteṣu māteva hitakāriṇī |",
    "980:6": "yāṃ samāśritya puruṣāḥ prayānti sukhamuttamam ||1||",
    "980:7": "dayānveṣīha puruṣaḥ sarvasattvahite rataḥ |",
    "980:8": "pūjanīyaḥ satāṃ yāti pretya svarge ca modate ||2||",
    "980:9": "dayāvantaḥ sadāvarta sarvabhūtahite ratam |",
    "980:10": "tamevaṃ puruṣaṃ nityaṃ praṇamanti divaukasaḥ ||3||",
    "980:11": "karuṇānvito devalokaṃ gacchati",
    "980:12": "prayāti devalokaṃ ca śīlavān karuṇānvitaḥ |",
    "980:13": "kṛpānvitaḥ sa puruṣo candramā iva śobhate ||4||",
    "980:14": "sukhārthinā karuṇā sevitavyā",
    "980:15": "āśrayanti ca bhūtāni gataśokā gatavyathā |",
    "980:16": "tasmād dayāprayatnena sevitavyā sukhārthinā ||5||",
    "980:17": "kāruṇyena yaśavṛddhirbhavati",
    "980:18": "yasya vāk kāyacitte (ca)",
    "980:19": "kāruṇyena vibhūṣite |",
    "980:20": "tasya mitramayā lokā bhavanti yaśasā vṛtāḥ ||6||",
    "980:21": "kāruṇyārdrasya viduṣo nirvāṇaṃ yāti",
    "980:22": "kāruṇyārdrasya viduṣo nityaṃ mṛdvindriyasya ca |",
    "980:23": "samyagdṛṣṭiprayatnasya nirvāṇaṃ nāti dūrataḥ ||7||",
    "980:24": "kāruṇyavibhūṣitā manuṣyalokaṃ devavad bhūṣayanti",
    "980:25": "manuṣyaloke te devā ye kāruṇyena vibhūṣitāḥ |",
    "980:26": "kāruṇyena daridrā ye te daridrāḥ satāṃ matāḥ ||8||",
    "980:27": "mṛdvāśayā martyāḥ sādhavaḥ",
    "980:28": "mṛdvāśayā hi ye martyāḥ sādhuvat kāñcanopamāḥ |",
    "980:29": "kāruṇyamakṣayaṃ yeṣāṃ sadā manasi vartate ||9||",
    "980:30": "ke dharmaparāyaṇā bhavanti?",
    "980:31": "te ca sattvāḥ sadodyuktā nityaṃ dharmaparāyaṇāḥ |",
    "980:32": "yeṣāṃ kāruṇyadīpena hṛdayaṃ samprakāśitam ||10||",
    "980:33": "na rātrau na divā teṣāṃ dharmo hi vinivartate |",
    "980:34": "yeṣāṃ sarvāsvavasthāsu karuṇābhirataṃ matam ||11||",
    "980:35": "kāruṇyaṃ śītalaṃ cittam",
    "980:36": "kāruṇyaśītalaṃ cittaṃ sarvasattvahite ratam |",
    "980:37": "bhuktvā saukhyaṃ nirupamaṃ paścād gacchati nirvṛtim ||12||",
    "980:38": "kāruṇyamavināśi dhanam",
    "980:39": "kāruṇyaṃ munibhiḥ śastaṃ kāruṇyaṃ nirmalaṃ saraḥ |",
    "980:40": "kāruṇyaṃ doṣanirghāti kāruṇyaṃ dhanamavyayam ||13||",
    "980:41": "guṇānāṃ bhūṣaṇaṃ cāgraṃ sarvadoṣavighātakam |",
    "980:42": "kāruṇyārdrā hi paramaṃ prayānti dhanamacyutam ||14||",
    "980:43": "kāruṇyaṃ (vai)",
    "980:44": "dhanaṃ yasmānmādhuryapayasā yutam |",
    "980:45": "na dāhaḥ krodhajastasya hṛdaye sampravartate ||15||",
    "980:46": "kāruṇyanāvamāruhya janā bhavasāgaraṃ taranti",
    "980:47": "kāruṇyanāvamāruhya prītirdhairyaparāyaṇaḥ |",
    "980:48": "tridoṣormimahāvege bhrāmyate bhavasāgare ||16||",
    "980:49": "karuṇāyāḥ paribhāṣā",
    "980:50": "guṇānāmadvayaṃ śreṣṭhaṃ vinā cittena bhūṣaṇam |",
    "980:51": "sādhūnāṃ dayitaṃ nityaṃ kāruṇyamiti kathyate ||17||",
    "980:52": "mārdavaṃ yasya hṛdaye vilīnamiva kāñcanam |",
    "980:53": "sa jano hi tu kalpānte duḥkhādāśu vimucyate ||18||",
    "980:54": "dayāloḥ śreyāṃsi rohanti",
    "980:55": "yasya pātrīkṛtaṃ cittaṃ mārdaveṇa samantataḥ |",
    "980:56": "śreyāṃsi tasya rohanti kedāra iva śālayaḥ ||19||",
    "980:57": "cetogṛhe nidhānaṃ tadavyayaṃ (sarva) dehinaḥ |",
    "980:58": "nirvāsayati dāridrayaṃ nṛṇāmadhyāśayaṃ mahat ||20||",
    "980:59": "tīkṣṇendriyasyāśāntasya nidhyānasya vicāriṇaḥ |",
    "980:60": "viṣayeṣu pramattasya duḥkhaṃ naiva pradhāvati ||21||",
    "980:61": "maitreṇa cetasā nityamanukampā-dayā parāḥ |",
    "980:62": "te hetuphalatattvajñā duḥkhapāśād vinirgatāḥ ||22||",
    "980:63": "na saṅkalpe mano yeṣāṃ ramate doṣavarjitam |",
    "980:64": "te doṣabhayanirmuktāḥ padaṃ gacchantyanuttaram ||23||",
    "980:65": "kṣāntikriyāsamāyukte mitravānakutobhayaḥ |",
    "980:66": "priyo bhavati loke'smin paścād deveṣu modate ||24||",
    "980:67": "dayāratnaṃ sadā sevyam",
    "980:68": "mātṛvat pitṛvaccaiva sarvalokasya te janāḥ |",
    "980:69": "dayāratnaṃ sadā yeṣāṃ manasi sthitamuttamam ||25||",
    "980:70": "kṛpaiva sukhasya mūlamasti",
    "980:71": "sukhasya ca paraṃ mūlaṃ kṛpaiva parikīrtitā |",
    "980:72": "(hṛdi ) yasya kṛpā nāsti sa duḥkhī parikīrtyate ||26||",
    "980:73": "maitrī eva sukhāvahā",
    "980:74": "ekasatyottaraṃ brahma ekasyānuttaraṃ śivam |",
    "980:75": "ekavidyā paraṃ mātā maitrī caikā sukhāvahā ||27||",
    "980:76": "ahiṃsakā eva dhanyāḥ",
    "980:77": "ahiṃsakāḥ sadā dhanyāḥ saddṛṣṭiḥ paramā śubhā |",
    "980:78": "etad ṛju sadā satyaṃ pāpānāṃ cāpi varjanam ||28||",
    "980:79": "karuṇāyā māhātmyam",
    "980:80": "karttavyaḥ puruṣaistasmāt kṛpāsaṃvegamānasaiḥ |",
    "980:81": "dāna-śīla-kṣamā-maitrī-jñānābhyāsaśca nirmalaḥ ||29||",
    "980:82": "||iti karuṇāvarga ekaviṃśaḥ ||"
}