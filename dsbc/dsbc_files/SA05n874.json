{
  "SA05n874:0": "śākyasiṃhastotram",
  "SA05n874:1": "durgatipariśodhanoddhṛtam",
  "SA05n874:2": "om namaḥ śākyasiṃhāya",
  "SA05n874:3": "namaste śākyasiṃhāya dharmacakrapravartaka |",
  "SA05n874:4": "traidhātukaṃ jagatsarvaṃ śodhayet sarvadurgatim || 1 ||",
  "SA05n874:5": "namaste vajroṣṇīṣāya dharmadhātusvabhāvaka |",
  "SA05n874:6": "sarvasattvahitārthāya ātmatattvapradeśaka || 2 ||",
  "SA05n874:7": "namaste ratnoṣṇīṣāya samantāttattvabhāvanaiḥ |",
  "SA05n874:8": "traidhātukaṃ sthitaṃ sarvamabhiṣekapradāyaka || 3 ||",
  "SA05n874:9": "namaste padmoṣṇīṣāya svabhāvapratyabhāṣaka |",
  "SA05n874:10": "āśvāsayanyaḥ sattveṣu dharmāmṛtaṃ pravartayet || 4 ||",
  "SA05n874:11": "namaste viśvoṣṇīṣāya svabhāvakṛtamanusthita |",
  "SA05n874:12": "viśvakarmakaro hyeṣa sattvānāṃ duḥkhaśāntaye || 5 ||",
  "SA05n874:13": "namaste tejoṣṇīṣāya traidhātukamabhāṣaka |",
  "SA05n874:14": "sarvasattva upāyeṣu sattvadṛṣṭaṃ kariṣyate || 6 ||",
  "SA05n874:15": "namaste dhvajoṣṇīṣāya cintāmaṇidhvajādhara |",
  "SA05n874:16": "dānena sarvasattvānāṃ sarvāśāparipūraka || 7 ||",
  "SA05n874:17": "namaste tṛṣṇoṣṇīṣāya kleśopakleśachedana |",
  "SA05n874:18": "caturmārabalaṃ bhagnaṃ sattvānāṃ bodhiprāptaye || 8 ||",
  "SA05n874:19": "namaste chatroṣṇīṣāya ātapatraṃ suśobhanam |",
  "SA05n874:20": "traidhātuka jagatsarvaṃ dharmarājatvaprāpakam || 9 ||",
  "SA05n874:21": "lāsyā mālā tathā gītā nṛtyā devīcatuṣṭayam |",
  "SA05n874:22": "puṣpā dhūpā ca dīpā ca gandhādevī namo'stu te || 10 ||",
  "SA05n874:23": "dvāramadhyasthitā ye ca aṃkuśapāśaphoṭakāḥ |",
  "SA05n874:24": "śraddhābhāvavinirjñātaṃ dvārapāla namo'stu te || 11 ||",
  "SA05n874:25": "vedikādau sthitā ye ca catasro dvārapālikāḥ |",
  "SA05n874:26": "muditādau daśa sthitvā bodhisattva namostu te || 12 ||",
  "SA05n874:27": "brahmendrarudracandrārkā lokapālāścaturdiśam |",
  "SA05n874:28": "agnī rākṣasavāyuśca bhūtādhipate namostu te || 13 ||",
  "SA05n874:29": "anena stotrarājena saṃsthito maṇḍalāgrataḥ |",
  "SA05n874:30": "vajraghaṇṭāgharo mantrī idaṃ stotramudāharet || 14 ||",
  "SA05n874:31": "durgatipariśodhanoddhṛtaṃ śrīśākyasiṃhastotraṃ samāptam |"
}