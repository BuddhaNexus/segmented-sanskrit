{
  "SA01n794:0": "daśākuśalakarmapathadeśanā",
  "SA01n794:1": "namo ratnatrayāya",
  "SA01n794:2": "kenacit sugatiprāptukāmena heyā daśākuśalakarmapathāḥ prakṛtisāvadyāḥ, tadyathā-",
  "SA01n794:3": "“trividhaṃ kāyikaṃ karma vācikaṃ tu caturvidham |",
  "SA01n794:4": "mānasaṃ triprakāraṃ ca daśaite'kuśalā matāḥ ||1 ||",
  "SA01n794:5": "ete pravibhāgaśaḥ vyākhyāyante-tatra tāvat kāyikam-prāṇātipātaḥ,",
  "SA01n794:6": "adattādānam,",
  "SA01n794:7": "kāmamithyācāraśceti |",
  "SA01n794:8": "vācikam- mṛṣāvādaḥ,",
  "SA01n794:9": "paiśunyam,",
  "SA01n794:10": "pāruṣyam,",
  "SA01n794:11": "saṃbhinnapralāpaśca |",
  "SA01n794:12": "mānasañca- abhidhyā,",
  "SA01n794:13": "vyāpādo,",
  "SA01n794:14": "mithyādṛṣṭiśca |",
  "SA01n794:15": "tatra prāṇātipātastu prāṇibhāvaḥ,",
  "SA01n794:16": "prāṇisaṃjñābhāvaḥ,",
  "SA01n794:17": "vadhakacittopasthitiḥ,",
  "SA01n794:18": "etadupāyakaraṇam,",
  "SA01n794:19": "prāṇāvarodhabhāvaśceti etatpañcāṅgaiḥ saṃyukto bhavati prāṇātipātaḥ |",
  "SA01n794:20": "tatra katamat adattādānam?",
  "SA01n794:21": "parabhāvaḥ,",
  "SA01n794:22": "paraparigrahasaṃjñatvam ca,",
  "SA01n794:23": "steyacittopasthitiḥ,",
  "SA01n794:24": "tadupāyakaraṇam,",
  "SA01n794:25": "sthānacyutiśca etatpañcāṅgasaṃyuktaṃ bhavatyadattādānam |",
  "SA01n794:26": "kāmamithyācārastu caturvidhaḥ |",
  "SA01n794:27": "asthānam, akālaḥ,",
  "SA01n794:28": "adeśaḥ,",
  "SA01n794:29": "agamyaśceti |",
  "SA01n794:30": "tatra asthānaṃ tu saddharma-pratimādi-bodhisattvasthānācāryopādhyāyadakṣiṇīya- mātā-pitṛ-gurvādisaṃnidhiḥ |",
  "SA01n794:31": "akāla iti divase ṛtumatī-garbhiṇī-śiśupoṣiṇībhiḥ anicchāduḥkhadaurmanasyapīḍitābhiḥ,",
  "SA01n794:32": "aṣṭāṅgoposathāvasthitau ca |",
  "SA01n794:33": "adeśa iti mukhavarcomārgatvaṃ,",
  "SA01n794:34": "kumārakanyayoḥ puraḥpṛṣṭharandhratvaṃ svagastatvaṃ ca |",
  "SA01n794:35": "agamyāstu sarvāḥ parastriyaḥ dharma-dhvaja-kula-rakṣitāḥ,",
  "SA01n794:36": "rājarakṣitāḥ,",
  "SA01n794:37": "paraparigṛhītā veśyāḥ,",
  "SA01n794:38": "sambandhinyaḥ,",
  "SA01n794:39": "tiraścyaśca |",
  "SA01n794:40": "evaṃ svabhāryāsevane'pi bhavati kāmamithyācāraḥ |",
  "SA01n794:41": "tatra mṛṣāvādastu avāstavikatvam,",
  "SA01n794:42": "vastusthiticyutiḥ,",
  "SA01n794:43": "mithyāsaṃjñābhāvaḥ,",
  "SA01n794:44": "mithyopāyopasthitiśca,",
  "SA01n794:45": "tadupāyakaraṇanceti mithyāvacanoktiśca ityetat pañcāṅgasaṃyoge mṛṣāvādaḥ |",
  "SA01n794:46": "paiśunyaṃ tu kliṣṭacittena parabhedakathanam |",
  "SA01n794:47": "pāruṣyamiti paramarmavedhi dveṣavacanam |",
  "SA01n794:48": "sambhinnapralāpa iti-rāgopayuktatvād āsaktiyogād vā avācyavacanam |",
  "SA01n794:49": "abhidhyeti paradhana-dravyaiśvaryeṣu tīvrāsaktacittatā |",
  "SA01n794:50": "vyāpādastu sattveṣu vidveṣabhāvaḥ,",
  "SA01n794:51": "etān sattvān haniṣyāmi rotsyāmi,",
  "SA01n794:52": "tāḍayiṣyāmi,",
  "SA01n794:53": "bandhayiṣyāmi iti cintanam |",
  "SA01n794:54": "mithyādṛṣṭiriti nāsti dānam,",
  "SA01n794:55": "na yajñaṃ,",
  "SA01n794:56": "nehalokaḥ,",
  "SA01n794:57": "na paralokaḥ,",
  "SA01n794:58": "na śramaṇaḥ,",
  "SA01n794:59": "na brāhmaṇaḥ,",
  "SA01n794:60": "na devaḥ,",
  "SA01n794:61": "na buddho bhagavān,",
  "SA01n794:62": "na arhan,",
  "SA01n794:63": "na pratyekabuddhaḥ,",
  "SA01n794:64": "na sucaritam na ca duścaritam,",
  "SA01n794:65": "na sukṛta-duṣkṛta-karmāṇāṃ phalavipākaśceti |",
  "SA01n794:66": "bhagavatā ukte 'āryasaddharmasmṛtyupasthāne' mahāyānasūtre ca nirdiṣṭo daśākuśalakarmapatho'yaṃ tu mahānarakahetuḥ |",
  "SA01n794:67": "daśākuśalakarmapathasevanena patanti sattvā narakeṣu |",
  "SA01n794:68": "mahācāryadīpaṅkaraśrījñānapādena praṇītā daśākuśalakarmapathadeśanā samāptā |",
  "SA01n794:69": "tenaiva bhāratīyopādhyāyena mahāsaṃśodhakalokakṣuṣā bhikṣu-jayaśīlena cānūditaḥ sampāditaśca ||"
}