{
  "SA01n772:0": "bhadantaghoṣakapraṇītam",
  "SA01n772:1": "abhidharmāmṛtaśāstram",
  "SA01n772:2": "prathamo binduḥ",
  "SA01n772:3": "dānaṃ śīlaṃ ca",
  "SA01n772:4": "1 | katamad dānaṃ |",
  "SA01n772:5": "svasvāmikānāṃ dhanavastūnāṃ vitaraṇaṃ dānaṃ |",
  "SA01n772:6": "tat trividhaheto rbhavati |",
  "SA01n772:7": "ātmahetoḥ parahetoḥ parātmahetośca |",
  "SA01n772:8": "caityamaṃdirāṇāṃ buddhapratyekabuddhārhatāṃ copasthānamātmahetoḥ |",
  "SA01n772:9": "sattvebhyo dānaṃ parahetoḥ |",
  "SA01n772:10": "janebhyo dānaṃ parātmahetoḥ ||",
  "SA01n772:11": "2 | cittakṣetravastukuśalaiḥ kuśalaphalaprāptiḥ |",
  "SA01n772:12": "katamaccittakuśalaṃ |",
  "SA01n772:13": "pariśuddhā śraddhā pūjā ca ||",
  "SA01n772:14": "katamat kṣetrakuśalaṃ |",
  "SA01n772:15": "mahāpuṇyāḥ duḥkhitāḥ mahāpuṇyāśca duḥkhitāśca |",
  "SA01n772:16": "ke mahāpuṇyāḥ |",
  "SA01n772:17": "buddhā bodhisattvāḥ pratyekabuddhā arhanto&#39;",
  "SA01n772:18": "nāgāminaḥ sakṛdāgāminaḥ srota āpannāśca |",
  "SA01n772:19": "ke duḥkhitāḥ |",
  "SA01n772:20": "tiryaṃco vṛddhā rogiṇo badhirā andhā mūkāstathāvidhā anye ca duḥkhitāḥ |",
  "SA01n772:21": "ke mahāpuṇyāśca duḥkhitāśca |",
  "SA01n772:22": "buddhā bodhisattvāḥ pratyekabuddhā arhanto&#39;",
  "SA01n772:23": "nāgāminaḥ sakṛdāgāminaḥ srota āpannāśca (yadā)",
  "SA01n772:24": "vṛddhā rogiṇo badhirā andhā mūkā duḥkhitāḥ |",
  "SA01n772:25": "mahāpuṇyakṣetre gauravacittena mahāphalaprāptiḥ |",
  "SA01n772:26": "duḥkhitakṣetre karuṇācittena mahāphalaprāptiḥ |",
  "SA01n772:27": "mahāpuṇye duḥkhite ca kṣetre gauravakaruṇācittena mahāphalaprāptiḥ |",
  "SA01n772:28": "iti kuśalaṃ puṇyakṣetraṃ |",
  "SA01n772:29": "katamad vastukuśalaṃ |",
  "SA01n772:30": "aprāṇātipātenādattādānena balāpahāraviratyā&#39;",
  "SA01n772:31": "bandhanenātāḍanenāvaṃcanenāsaṃbhinnapralāpena (arjitatayā)",
  "SA01n772:32": "pariśuddhaṃ yathākālaṃ (yatkiṃcid)",
  "SA01n772:33": "alpaṃ bahu dīyamānaṃ vastukuśalaṃ ||",
  "SA01n772:34": "3 | śraddhā katamā |",
  "SA01n772:35": "āmuṣmike phale yathā nirvāṇe jñānamacalaikacittamucyate pariśuddhā śraddhā ||",
  "SA01n772:36": "katamā pūjā |",
  "SA01n772:37": "mātsaryeṇābhidhyayā ca viviktātmano janamānanamucyate pariśuddhā pūjā |",
  "SA01n772:38": "yadidamupasthānaṃ vaṃdanaṃ svahastena dānamityeva mādya cyate pūjā ||",
  "SA01n772:39": "katamaḥ kṣetravibhaṃgaḥ |",
  "SA01n772:40": "kuśalacaryāśīlagrahaṇadhyānaprajñāvimokṣeṣu satsu bhavati puṇyānāṃ phalānāṃ prāptiriti kṣetravibhaṃgaḥ ||",
  "SA01n772:41": "4 | bhayatrāṇaṃ (hi dānaṃ) |",
  "SA01n772:42": "hetupratyayavibhāgādduḥkhaprāptiḥ |",
  "SA01n772:43": "(dāna)prasthitacittasya pūjayā dānena satphalaprāptiḥ |",
  "SA01n772:44": "buddhāya dānena dānasamakālameva sarvapuṇyaprāptiḥ |",
  "SA01n772:45": "saṃghāya dānena (saṃghena)",
  "SA01n772:46": "anumatenopabhuktenākhilapuṇyaprāptiḥ |",
  "SA01n772:47": "nānumatena nopabhukta na nākhilapuṇyaprāptiḥ |",
  "SA01n772:48": "dharmāya pūjayā mahāphalaprāptiḥ |",
  "SA01n772:49": "śaikṣāṇāṃ caturāṇāṃ prajñāvatāṃ pūjā dharmāyocyate pūjā |",
  "SA01n772:50": "dharmadānena samṛddhilābhaḥ |",
  "SA01n772:51": "(sva)parigṛhīta vastu dānena sukhabalāyuṣyādiśubhaprāptiḥ |",
  "SA01n772:52": "kleśānāṃ kṣayeṇa vijayena mahāphalaprāptiḥ |",
  "SA01n772:53": "tiryagbhyo dānasya śatajanmāni yāvatphalaprāptiḥ |",
  "SA01n772:54": "pāpebhyo dānasya sahasrajanmāni yāvatphalaprāptiḥ |",
  "SA01n772:55": "puṇyebhyo dānasya śatasahasrajanmāni yāvatphalaprāptiḥ |",
  "SA01n772:56": "vītarāgapudgalebhyo dānasya koṭiśatasahasrajanmāni yāvatphalaprāptiḥ |",
  "SA01n772:57": "buddhebhyo dānasya yāvannirvāṇaṃ phalaprāptiḥ ||",
  "SA01n772:58": "5 | ṣaḍ dānāntarāyāḥ |",
  "SA01n772:59": "prathamo mānena dānaṃ |",
  "SA01n772:60": "dvitīyo yaśase dānaṃ |",
  "SA01n772:61": "tṛtīyo balāya dānaṃ |",
  "SA01n772:62": "caturtho&#39;nicchayā dānaṃ |",
  "SA01n772:63": "paṃcamo nimittena dānaṃ |",
  "SA01n772:64": "ṣaṣṭhaḥ phalāya dānaṃ saṃghānnirdhārya dānaṃ ||",
  "SA01n772:65": "6 | katamacchīlaṃ |",
  "SA01n772:66": "dvividhaḥ saṃvaraḥ |",
  "SA01n772:67": "kuśalasaṃvaro&#39;",
  "SA01n772:68": "kuśalasaṃvaraśca |",
  "SA01n772:69": "katamo&#39;kuśalasaṃvaraḥ |",
  "SA01n772:70": "prāṇātipātaḥ adattādānaṃ kāmamithyācāraśceti trīṇi kāyaduścaritāni nāma |",
  "SA01n772:71": "paiśunyaṃ pāruṣyaṃ mṛṣāvādaḥ saṃbhinnapralāpaśceti catvāri vāgduścaritāni nāma |",
  "SA01n772:72": "abhidhyā vyāpādaḥ mithyādṛṣṭiśceti trīṇi manoduścaritāni nāma ||",
  "SA01n772:73": "7 | (katamaḥ prāṇātipātaḥ |",
  "SA01n772:74": ")asti jīvo jñāyate yadayaṃ jīvastasya prāṇāpahāro nāma prāṇātipātaḥ |",
  "SA01n772:75": "(katamadadattādānaṃ |",
  "SA01n772:76": ")asti parāyattaṃ vastu jñāyate yadidaṃ parāyattaṃ vastu tasya steyaṃ nāmādattādānaṃ |",
  "SA01n772:77": "(katamaḥ kāmamithyācāraḥ |",
  "SA01n772:78": ")asti paradārā jñāyate yadiyaṃ paradārāstāṃ rāgānmārgeṇāmārgeṇa vā samāpadyate&#39;",
  "SA01n772:79": "styātmano dārāstāmamārgeṇa maithunāya sevate tadetādṛśaḥ kāmamithyācāro nāma ||",
  "SA01n772:80": "8 | (katamo mṛṣāvādaḥ |",
  "SA01n772:81": ")yadi jñātaṃ na jñātamiti vadati |",
  "SA01n772:82": "ajñātaṃ jñātamiti vadati |",
  "SA01n772:83": "saṃdigdhamasaṃdigdhamiti vadati |",
  "SA01n772:84": "asaṃdigdhaṃ saṃdigdhamiti vadati |",
  "SA01n772:85": "tadetādṛśo mṛṣāvādo nāma |",
  "SA01n772:86": "(katamatpaiśunyaṃ |",
  "SA01n772:87": ")yadi satyabhūtaṃ yathākāmaṃ bhaṃktvā prayojanavaśādvadati tadetādṛśaṃ paiśunyaṃ nāma |",
  "SA01n772:88": "(katamatpāruṣyaṃ |",
  "SA01n772:89": ")kliṣṭena cittena pareṣāmahṛdyaṃ vadati tadetādṛśaṃ pāruṣyaṃ nāma |",
  "SA01n772:90": "(katamaḥ saṃbhinnapralāpaḥ |",
  "SA01n772:91": ")kālavivekaṃ vinā vadatyapārthaṃ tadetādṛśaḥ saṃbhinnapralāpo nāma ||",
  "SA01n772:92": "9 | (katamābhidhyā |",
  "SA01n772:93": ")pareṣāṃ dhanavastujātaṃ madīyaṃ bhavatvityabhidhyāyati tadetādṛśyabhidhyā nāma |",
  "SA01n772:94": "(katamo vyāpādaḥ |",
  "SA01n772:95": ")aparān dṛṣṭvā na prasīdati duḥkhābādhāṃ prayoktukāmo bhavati tadetādṛśo vyāpādo nāma |",
  "SA01n772:96": "(katamā mithyādṛṣṭiḥ |",
  "SA01n772:97": ")mithyādṛṣṭirdvividhā |",
  "SA01n772:98": "sadvastunyasaduktirviparītaṃ darśanaśrutaṃ ca |",
  "SA01n772:99": "katamā sadavastunyasaduktiḥ |",
  "SA01n772:100": "nāstiṃ pāpaṃ nāsti puṇyavipākaḥ |",
  "SA01n772:101": "nāstyayaṃ loko nāsti paralokaḥ |",
  "SA01n772:102": "na sto mātāpitarau |",
  "SA01n772:103": "na santi buddhāḥ pratyekabuddhā arhanto&#39;",
  "SA01n772:104": "nye ca mārgapratipannāḥ |",
  "SA01n772:105": "tadetādṛśī nāma sadvastunyasaduktiḥ |",
  "SA01n772:106": "katamadviparītaṃ darśanaśrutaṃ |",
  "SA01n772:107": "vidhikṛte kuśalākuśale |",
  "SA01n772:108": "na karmāṇyupādāya phalavipākaḥ |",
  "SA01n772:109": "ityetādṛśaṃ viparītaṃ darśanaśrutaṃ |",
  "SA01n772:110": "ityevameṣā mithyādṛṣṭiḥ |",
  "SA01n772:111": "iti trividhānyakuśalakarmāṇi ||",
  "SA01n772:112": "10 | anuśocatastrividhānāṃ duścaritānāmucchedo&#39;",
  "SA01n772:113": "nācaraṇaṃ nāma trividhāni kuśalakarmāṇi |",
  "SA01n772:114": "trividhaduścaritaprahāṇaṃ trividhakuśala(karma)",
  "SA01n772:115": "caraṇaṃ nāma dhruvaśīlasamādānaṃ |",
  "SA01n772:116": "dānena śīlena dhyānabhāvanayā ca labhyānyeva trīṇi phalāni dhanaṃ devalokopapattirmokṣaśca ||",
  "SA01n772:117": "11 | asmin loke triṃśadvidhaṃ puṇyakṣetraṃ |",
  "SA01n772:118": "mātā pitā vṛddho rogo satpuruṣo vītarāgapudgalaḥ sāsravāḥ sapta pudgalāścatvāro mārgapratipannāścatvāraḥ phalapratipannāḥ pratyekabuddhā buddhā bodhisattvā bhikṣusaṃgho&#39;",
  "SA01n772:119": "dhvagāḥ kṣuttṛṭśramāturāśca ||",
  "SA01n772:120": "[ityabhidharmāmṛtaśāstre dānaśīlanirdeśo nāma prathamo binduḥ ||]"
}