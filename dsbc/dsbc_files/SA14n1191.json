{
  "SA14n1191:0": "4. vīryapāramitāsamāsaḥ",
  "SA14n1191:1": "sarvaṃsahe kṣāntibale ca rūḍhe",
  "SA14n1191:2": "sarvādbhutānyārabhate sa śauryāt |",
  "SA14n1191:3": "vīryeṇa kāryāntamahābalena",
  "SA14n1191:4": "yasmāt sa devānapi yātyatītya || 1 ||",
  "SA14n1191:5": "sudṛśyapārāṇyapi laukikāni",
  "SA14n1191:6": "kāryāṇi nirvīryaduruttarāṇi |",
  "SA14n1191:7": "aprāpyarūpaṃ tu na kiṃ cid asti",
  "SA14n1191:8": "khedānabhijñena parākrameṇa || 2 ||",
  "SA14n1191:9": "ārabdham evotsahate na hīna",
  "SA14n1191:10": "ārabhya madhyastu viṣādameti |",
  "SA14n1191:11": "parārtham aśrāntaparākramāste",
  "SA14n1191:12": "nirvāṇamutsṛjya samārabhante || 3 ||",
  "SA14n1191:13": "prāyeṇa dainyopahato jano'yaṃ",
  "SA14n1191:14": "svādhīnavīryo'pi gurusvakāryaḥ |",
  "SA14n1191:15": "ahīnavīryasya tu merusāro'pyakhe-",
  "SA14n1191:16": "dasādhyaḥ parakāryabhāraḥ || 4 ||",
  "SA14n1191:17": "saṃsārakoṭyorubhayoḥ samānaiḥ",
  "SA14n1191:18": "prayāmasārairdivasairyadi syuḥ |",
  "SA14n1191:19": "saṃvatsarāstatpracayātidīrghaiḥ",
  "SA14n1191:20": "kalpaiḥ samudrodakabindutulyaiḥ || 5 ||",
  "SA14n1191:21": "utpādayeyaṃ yadi bodhicittam",
  "SA14n1191:22": "ekaikametena parākrameṇa |",
  "SA14n1191:23": "saṃbhāraśeṣaṃ cinuyāṃ tathāpi",
  "SA14n1191:24": "bhūyaḥsamutsāritakhedadainyaḥ || 6 ||",
  "SA14n1191:25": "ekaikamevaṃ yadi bodhicittaṃ",
  "SA14n1191:26": "prāpyeta saṃbhāravidhiśca śeṣaḥ |",
  "SA14n1191:27": "tathāpi bodhiṃ samudānayeyaṃ",
  "SA14n1191:28": "kṛpāsamutsāhitadhairyasāraḥ || 7 ||",
  "SA14n1191:29": "saṃsāraduḥkhaṃ svamacintayitvā",
  "SA14n1191:30": "saṃnāhadārḍhyaṃ yadacintyamevam |",
  "SA14n1191:31": "ādyaṃ samādānamidaṃ vadanti",
  "SA14n1191:32": "vīravratānāṃ karuṇātmakānām || 8 ||",
  "SA14n1191:33": "padbhyāṃ atikramya kukūlakalpāṃ",
  "SA14n1191:34": "kṛtsnāṃ mahīmāyudhasaṃvṛtāṃ vā |",
  "SA14n1191:35": "yaddraṣṭum apyutsahate munīndrān",
  "SA14n1191:36": "pātuṃ śivaṃ dharmarasāyanaṃ vā || 9 ||",
  "SA14n1191:37": "saṃsārapaṅkājjanatā mayeyam",
  "SA14n1191:38": "uddhṛtya nirvāṇasukhe niveṣyā |",
  "SA14n1191:39": "utkṣepanikṣepavidhau padānāṃ",
  "SA14n1191:40": "yaccittamevaṃ ca samādadāti || 10 ||",
  "SA14n1191:41": "yad vā hitārthaṃ kramate parasya",
  "SA14n1191:42": "puṇyāni vā lokahitāya cittam |",
  "SA14n1191:43": "parākramaḥ so'kṣayavikramāṇāṃ",
  "SA14n1191:44": "śrīmatsamādānavidhau dvitīyaḥ || 11 ||",
  "SA14n1191:45": "puṇyasya cotpādasamānakālaṃ",
  "SA14n1191:46": "saṃbuddhabhāve pariṇāmanaṃ yat |",
  "SA14n1191:47": "tadakṣayatvaṃ samudāgamāya",
  "SA14n1191:48": "śubhaṃ samādānam udāharanti || 12 ||",
  "SA14n1191:49": "mahatsu vāmbhaḥsu yathā niṣikto",
  "SA14n1191:50": "naivodabinduḥ kṣayamabhyupaiti |",
  "SA14n1191:51": "saṃbuddhabhāve pariṇāmitasya",
  "SA14n1191:52": "tathaiva puṇyasya na saṃkṣayo'sti || 13 ||",
  "SA14n1191:53": "tathā hi kāruṇyaviśuddhabuddhiḥ",
  "SA14n1191:54": "sarvajñabhāvāya phalantyamūni |",
  "SA14n1191:55": "puṇyāni lokasya carācarasyetyevaṃ",
  "SA14n1191:56": "sa tānyārabhate susattvaḥ || 14 ||",
  "SA14n1191:57": "mahātrisāhasragataṃ janaughaṃ",
  "SA14n1191:58": "nirvāpayedekadine na kaścit |",
  "SA14n1191:59": "kalpaṃ tathā naiva ca sattvadhātoste-",
  "SA14n1191:60": "nāpi kiṃ cit paripācitaṃ syāt || 15 ||",
  "SA14n1191:61": "śrutvāpi sattvākṣayatāṃ imāṃ yaḥ",
  "SA14n1191:62": "sattvānaśeṣān vininīṣureva |",
  "SA14n1191:63": "viṣādadoṣānavalīḍhavīryaḥ",
  "SA14n1191:64": "kastasya dūrastha ihārthasāraḥ || 16 ||",
  "SA14n1191:65": "yaḥ puṇyarāśirjagatāṃ samagrastā-",
  "SA14n1191:66": "vatpramāṇairdaśabhirjinasya |",
  "SA14n1191:67": "nivṛttimāgacchati romakūpa",
  "SA14n1191:68": "ekaika ekaikasujātaromā || 17 ||",
  "SA14n1191:69": "śatena bhūyo guṇitena tena",
  "SA14n1191:70": "puṇyena romāspadasaṃśritena |",
  "SA14n1191:71": "bhavatyanuvyañjanamekameva",
  "SA14n1191:72": "śeṣāṇi tasya prabhavanti kāye || 18 ||",
  "SA14n1191:73": "tāvadguṇādeva ca puṇyarāśesta-",
  "SA14n1191:74": "smād anuvyañjanasaṃpraviṣṭāt |",
  "SA14n1191:75": "pratyekaśastasya jinatvaśaṃsi",
  "SA14n1191:76": "nirvartate lakṣaṇacitrakarma || 19 ||",
  "SA14n1191:77": "sallakṣaṇotpattinimittabhūtāt",
  "SA14n1191:78": "sahasrasaṃkhyāguṇitācca puṇyāt |",
  "SA14n1191:79": "nirvartate tasya manojñavarṇā",
  "SA14n1191:80": "saṃpūrṇacandrasphuṭakāntirūrṇā || 20 ||",
  "SA14n1191:81": "ūrṇābhinirvṛttikarmaṃ ca puṇyaṃ",
  "SA14n1191:82": "śatapramāṇairguṇitaṃ sahasraiḥ |",
  "SA14n1191:83": "karoti tasyānavalokanīyaṃ",
  "SA14n1191:84": "chattarābhamuṣṇīṣalalāmaśīrṣam || 21 ||",
  "SA14n1191:85": "ayaṃ mayā puṇyanidhiḥ parārthaṃ",
  "SA14n1191:86": "saṃceya ityuttamabodhicitte |",
  "SA14n1191:87": "vīryonmukhe kena mukhena tasmiṃlla-",
  "SA14n1191:88": "yapravṛttirlabhatāṃ praveśam || 22 ||",
  "SA14n1191:89": "sarve'pi sattvā yadi lokadhātau",
  "SA14n1191:90": "pratyekabuddhaiḥ sadṛśā bhaveyuḥ |",
  "SA14n1191:91": "jñānena tebhyo'bhyadhikaprabhāvaḥ",
  "SA14n1191:92": "kṣāntistha eko'pi hi bodhisattvaḥ || 23 ||",
  "SA14n1191:93": "tathaiva ca kṣāntibalasthitebhyo",
  "SA14n1191:94": "viśeṣaṃ āyātyavivartanīyaḥ |",
  "SA14n1191:95": "aśrāntavīryaḥ kuśalaprayoge",
  "SA14n1191:96": "yallaukike caiva taduttare ca || 24 ||",
  "SA14n1191:97": "tebhyaḥ puṇaścādhika eva dūraṃ",
  "SA14n1191:98": "ya ekajātipratibaddhabodhiḥ |",
  "SA14n1191:99": "ka eva vādo dṛḍhavīryavatsu",
  "SA14n1191:100": "ye bodhimūle prathamaṃ niṣaṇṇāḥ || 25 ||",
  "SA14n1191:101": "tādṛgvidhajñānaviśuddhipūrṇaḥ",
  "SA14n1191:102": "syād yadyaśeṣena ca lokadhātuḥ |",
  "SA14n1191:103": "yāyāt kalāṃ so'pi na bodhimūle",
  "SA14n1191:104": "sthitasya mārātikṛtāntyajāteḥ || 26 ||",
  "SA14n1191:105": "tādṛgvidhajñānaviśuddhacittāḥ",
  "SA14n1191:106": "syuryadyaśeṣena ca sarvalokāḥ |",
  "SA14n1191:107": "balapradeśasya muneratulyāḥ",
  "SA14n1191:108": "kalāpradeśairapi te samagrāḥ || 27 ||",
  "SA14n1191:109": "ityadbhutajñānasamudramekaḥ",
  "SA14n1191:110": "kṛpātmako nistarituṃ prayāti |",
  "SA14n1191:111": "avyāhatājñaḥ paracittacāre",
  "SA14n1191:112": "prajñāvabhāsaṃ ca nabho viśālam || 28 ||",
  "SA14n1191:113": "sarveṣu sattveṣu ca tasya mātrā",
  "SA14n1191:114": "samānahārdā karuṇābhyudeti |",
  "SA14n1191:115": "saṃbuddhadharmāśca tato'vaśeṣāsta-",
  "SA14n1191:116": "syādbhutāḥ saṃprabhavantyaśeṣāḥ || 29 ||",
  "SA14n1191:117": "ebhiḥ samādānaguṇairupetaḥ",
  "SA14n1191:118": "śuddhaśravaiḥ pelavasattvasattvaiḥ |",
  "SA14n1191:119": "aṣṭābhiraṅgairiva tattvamārgo",
  "SA14n1191:120": "vīryaprakarṣādadhikaṃ vibhāti || 30 ||",
  "SA14n1191:121": "vīryaṃ tridhā yaḥ kuśalaprayogasta-",
  "SA14n1191:122": "smācca vākkāyamanoviśeṣāḥ |",
  "SA14n1191:123": "prasthānaviṣṭhānasamāhitasya",
  "SA14n1191:124": "vīryaprakarṣasya manomayasya || 31 ||",
  "SA14n1191:125": "yo bodhicittapraṇayaḥ samaśca",
  "SA14n1191:126": "kṛpā ca nairātmagatau kṣamā ca |",
  "SA14n1191:127": "caturvikalpo janasaṃgrahaśca",
  "SA14n1191:128": "sarveṣu dharmeṣvanavagrahaśca || 32 ||",
  "SA14n1191:129": "saṃsārapaṅke yadakhinnatā ca",
  "SA14n1191:130": "traidhātukasyaiva ca nopalabdhiḥ |",
  "SA14n1191:131": "sarvasvadānaṃ na ca tena mānaḥ",
  "SA14n1191:132": "samagraśikṣasya na śikṣayā ca || 33 ||",
  "SA14n1191:133": "parāpakārairavikāri dhairyaṃ",
  "SA14n1191:134": "cittasya cātyantamavikṣatiryā |",
  "SA14n1191:135": "ārambhadārḍhayaṃ kuśalakriyāsu",
  "SA14n1191:136": "prītirvivekaikarasā ca citte || 34 ||",
  "SA14n1191:137": "caturvidhadhyānasamāpanaṃ ca",
  "SA14n1191:138": "cittasya nidhyaptiranātmataśca |",
  "SA14n1191:139": "atṛptatā ca śrutavistareṇa",
  "SA14n1191:140": "nyāyapraveśastadavekṣaṇācca || 35 ||",
  "SA14n1191:141": "yā deśanā caiva yathāśrutānāṃ",
  "SA14n1191:142": "jñānaṃ ca dharmānabhilāpyatāyām |",
  "SA14n1191:143": "pañcasvabhijñāsu ca yatprabhutvam",
  "SA14n1191:144": "abhyāsamātrā ca taduttarāyām || 36 ||",
  "SA14n1191:145": "yadṛddhipādeṣvabhinirhṛtatvaṃ",
  "SA14n1191:146": "paṭvī na cāyāsamayī kriyā ca |",
  "SA14n1191:147": "samyakprahāṇeṣu ca yaḥ prayogaḥ",
  "SA14n1191:148": "śubhāśubhādeva ca yā vimuktiḥ || 37 ||",
  "SA14n1191:149": "yatkauśalaṃ cendriyanirṇayeṣu",
  "SA14n1191:150": "nirindriyān paśyati yacca dharmān |",
  "SA14n1191:151": "mārgasya saṃbhāravimārgaṇaṃ ca",
  "SA14n1191:152": "na cāsya kiṃ cid gamanaṃ kutaścit || 38 ||",
  "SA14n1191:153": "ityevamādyaṃ pṛthucitravīryaṃ",
  "SA14n1191:154": "prasthānaviṣṭhānaviśeṣacitram |",
  "SA14n1191:155": "asyākṣayatvapratipūraṇārthaṃ",
  "SA14n1191:156": "prasthānakarmaiva viśeṣahetuḥ || 39 ||",
  "SA14n1191:157": "nimittakarmasvapi na pravartate",
  "SA14n1191:158": "vitiṣṭhate jñānamaye ca karmaṇi |",
  "SA14n1191:159": "kṛpāguṇādyan na jahāti saṃskṛtaṃ",
  "SA14n1191:160": "na coruvīryo'pi patatyasaṃskṛte || 40 ||",
  "SA14n1191:161": "apūrvadharmaśrutiralparogatā",
  "SA14n1191:162": "durāsadetvaṃ śrutadharmadhāraṇam |",
  "SA14n1191:163": "amānuṣebhyo'pi parigrahodayaḥ",
  "SA14n1191:164": "samādhigotrapratilambha eva ca || 41 ||",
  "SA14n1191:165": "vrajantyavandhyā yadaharniśaṃ kriyā",
  "SA14n1191:166": "guṇairna hāniṃ yadutpaiti mauśalīm |",
  "SA14n1191:167": "vivṛddha evotpalavacca yadguṇairma-",
  "SA14n1191:168": "nuṣyadharmādadhikaprayojanaiḥ || 42 ||",
  "SA14n1191:169": "yaśo viśālam ca sukhaṃ sukhodayaṃ",
  "SA14n1191:170": "vinītakārpaṇyamanastvamuttamam |",
  "SA14n1191:171": "guṇāśca teṣāmiha dṛṣṭadhārmikā",
  "SA14n1191:172": "bhavanti vīryāditi ko'tra vismayaḥ || 43 ||",
  "SA14n1191:173": "trailokyapūjyamamitoruguṇaṃ",
  "SA14n1191:174": "saṃbuddhabhāvamapi yānti yadā |",
  "SA14n1191:175": "vīryavyāpāśrayadṛḍhāḥ puruṣā",
  "SA14n1191:176": "na syād ataḥ ka iva vīryaparaḥ || 44 ||",
  "SA14n1191:177": " || vīryapāramitāsamāsaḥ ||"
}