{
    "921:0": "CANTO VII",
    "921:1": "tato visṛjyāśrumukhaṃ rudantaṃ",
    "921:2": "chandaṃ vanacchandatayā nirāsthaḥ|",
    "921:3": "sarvārthasiddho vapuṣābhibhūya",
    "921:4": "tamāśramaṃ siddha iva prapede||1||",
    "921:5": "sa rājasūnurmṛgarājagāmī",
    "921:6": "mṛgājiraṃ tanmṛgavatpraviṣṭaḥ|",
    "921:7": "lakṣmīviyukto'pi śarīralakṣmyā",
    "921:8": "cakṣūṃṣi sarvāśramiṇāṃ jahāra||2||",
    "921:9": "sthitā hi hastasthayugāstathaiva",
    "921:10": "kautūhalāccakradharāḥ sadārāḥ|",
    "921:11": "tamindrakalpaṃ dadṛśurna jagmu-",
    "921:12": "rdhuryā ivārdhāvanataiḥ śirobhiḥ||3||",
    "921:13": "viprāśca gatvā bahiridhmahetoḥ",
    "921:14": "prāptāḥ samitpuṣpavitrahastāḥ|",
    "921:15": "tapaḥpradhānāḥ kṛtabuddhayo'pi",
    "921:16": "taṃ draṣṭumīyurna maṭhānabhīyuḥ||4||",
    "921:17": "hṛṣṭāśca kekā mumucurmayūrā",
    "921:18": "dṛṣṭvāmbudaṃ nīlamivonnamantaḥ|",
    "921:19": "śaṣpāṇi hitvābhimukhāśca tasthu-",
    "921:20": "rmṛgāścalākṣā mṛgacāriṇaśca||5||",
    "921:21": "dṛṣṭvā tamikṣvākukulapradīpaṃ",
    "921:22": "jvalantamudyantamivāṃśumantam|",
    "921:23": "kṛte'pi dohe janitapramodāḥ",
    "921:24": "prasusruvurhomaduhaśca gāvaḥ||6||",
    "921:25": "kaścidvasūnāmayamaṣṭamaḥ syā-",
    "921:26": "tsyādāviśvanoranyataraścyuto vā|",
    "921:27": "ucceruruccairiti tatra vāca-",
    "921:28": "staddarśanādvismayajā munīnām||7||",
    "921:29": "lekharṣabhasyeva vapurdvitīyaṃ",
    "921:30": "dhāmeva lokasya carācarasya|",
    "921:31": "sa dyotayāmāsa vanaṃ hi kṛtsnaṃ",
    "921:32": "yadṛcchayā sūrya ivāvatīrṇaḥ||8||",
    "921:33": "tataḥ sa tairāśramibhiryathāva-",
    "921:34": "dabhyarcitaścopanimantritaśca|",
    "921:35": "pratyarcayāṃ dharmabhṛto babhūva",
    "921:36": "svareṇa sāmbho'mbudharopamena||9||",
    "921:37": "kīrṇaṃ tathā puṇyakṛtā janena|",
    "921:38": "svargābhikāmena vimokṣakāmaḥ|",
    "921:39": "tamāśramaṃ so'nucacāra dhira-",
    "921:40": "stapāṃsi citrāṇi nirīkṣamāṇaḥ||10||",
    "921:41": "tapovikārāṃśca nirīkṣya saumya-",
    "921:42": "stapovane tatra tapodhanānām|",
    "921:43": "tapasvinaṃ kaṃcidanuvrajantaṃ",
    "921:44": "tattvaṃ vijijñāsuridaṃ babhāṣe||11||",
    "921:45": "tatpūrvamadyāśramadarśanaṃ me",
    "921:46": "yāsmādimaṃ dharmavidhiṃ na jāne|",
    "921:47": "tasmābhdavānarhati bhāṣituṃ me",
    "921:48": "yo niścayo yatprati vaḥ pravṛttaḥ||12||",
    "921:49": "tato dvijātiḥ sa tapovihāraḥ",
    "921:50": "śākyarṣabhāyarṣabhavikramāya|",
    "921:51": "krameṇa tasmai kathayāṃcakāra",
    "921:52": "tapoviśeṣāṃstapasaḥ phalaṃ ca||13||",
    "921:53": "agrāmyamannaṃ salile prarūḍhaṃ",
    "921:54": "parṇīna toyaṃ phalamūlameva|",
    "921:55": "yathāgamaṃ vṛttiriyaṃ munīnāṃ",
    "921:56": "bhinnāstu te te tapasāṃ vikalpāḥ||14||",
    "921:57": "uñchena jīvanti khagā ivānye",
    "921:58": "tṛṇāni kecinmṛgavaccaranti|",
    "921:59": "kecidbhujaṅgaiḥ saha vartayanti",
    "921:60": "valmīkabhūtā vanamārutena||15||",
    "921:61": "āśmaprayatnārjitavṛttayo'nye",
    "921:62": "kecitsvadantāpahatānnabhakṣāḥ|",
    "921:63": "kṛtvā parārtha śrapaṇaṃ tathānye",
    "921:64": "kurvanti kāryaṃ yadi śeṣamasti||16||",
    "921:65": "kecijjalaklinnajaṭākalāpā",
    "921:66": "dviḥ pāvakaṃ juvhati mantrapūrvam|",
    "921:67": "mīnaiḥ samaṃ kecidapo vigāhya",
    "921:68": "vasanti kūrmollikhitaiḥ śarīraiḥ||17||",
    "921:69": "evaṃvidhaiḥ kālacitaistapobhiḥ",
    "921:70": "parairdivaṃ yāntyaparairnṛlokam|",
    "921:71": "duḥkhena mārgeṇa sukhaṃ hyupaiti",
    "921:72": "sukhaṃ hi dharmasya vadanti mūlam||18||",
    "921:73": "ityevamādi dvipadendravatsaḥ",
    "921:74": "śrutvā vacastasya tapodhanasya|",
    "921:75": "adṛṣṭatattvo'pi na saṃtutoṣa|",
    "921:76": "śanairidaṃ cātmagataṃ babhāṣe||19||",
    "921:77": "duḥkhātmakaṃ naikavidhaṃ tapaśca",
    "921:78": "svargapradhānaṃ tapasaḥ phalaṃ ca|",
    "921:79": "lokāśca sarve pariṇāmavantaḥ",
    "921:80": "svalpe śramaḥ khalvayamāśramāṇām||20||",
    "921:81": "priyāṃśca bandhūnviṣayāṃśca hitvā",
    "921:82": "ye svargahetorniyamaṃ caranti|",
    "921:83": "te viprayuktāḥ khalu gantukāmā",
    "921:84": "mahattaraṃ bandhanameva bhūyaḥ||21||",
    "921:85": "kāyaklamairyaśca tapo'bhidhānaiḥ",
    "921:86": "pravṛttimakāṅkṣati kāmahetoḥ|",
    "921:87": "saṃsāradoṣānaparīkṣamāṇo",
    "921:88": "duḥkhena so'nvicchati duḥkhameva||22||",
    "921:89": "trāsaśca nityaṃ maraṇātprajānāṃ",
    "921:90": "yatnena cecchanti punaḥprasūtim|",
    "921:91": "satyāṃ pravṛttau niyataśca mṛtyu-",
    "921:92": "statraiva magnā yata eva bhītāḥ||23||",
    "921:93": "ihārthameke praviśanti khedaṃ",
    "921:94": "svargārthamanye śramamāpnuvanti|",
    "921:95": "sukhārthamāśākṛpaṇo'kṛtārthaḥ",
    "921:96": "patatyanarthe khalu jīvalokaḥ||24||",
    "921:97": "na khalvayaṃ garhita eva yatno",
    "921:98": "yo hīnamṛtsṛjya viśeṣagāmi|",
    "921:99": "prājñaiḥ samānena pariśrameṇa",
    "921:100": "kāryaṃ tu tadyatra punarna kāryam||25||",
    "921:101": "śarīrapīḍā tu yadīha dharmaḥ",
    "921:102": "sukhaṃ śarīrasya bhavatyadharmaḥ|",
    "921:103": "dharmeṇa cāpnoti sukhaṃ paratra",
    "921:104": "tasmādadharma phalatīha dharmaḥ||26||",
    "921:105": "yataḥ śarīraṃ manaso vaśena",
    "921:106": "pravartate cāpi nivartate ca|",
    "921:107": "yukto damaścetasa eva tasmā-",
    "921:108": "ccittādṛte kāṣṭhasamaṃ śarīram||27||",
    "921:109": "āhāraśuddhyā yadi puṇyamiṣṭaṃ",
    "921:110": "tasmānmṛgānāmapi puṇyamasti|",
    "921:111": "ye cāpi bāhyāḥ puruṣāḥ phalebhyo",
    "921:112": "bhāgyāparādhena parāṅmukhārthāḥ||28||",
    "921:113": "duḥkhe'bhisaṃdhistvatha puṇyahetuḥ",
    "921:114": "sukhe'pi kāryo nanu so'bhisaṃdhiḥ|",
    "921:115": "atha pramāṇaṃ na sukhe'bhisaṃdhi-",
    "921:116": "rduḥkhe pramāṇaṃ nanu nābhisaṃdhiḥ||29||",
    "921:117": "tathaiva ye karmaviśuddhihetoḥ",
    "921:118": "spṛśantyapastīrthamiti pravṛttāḥ|",
    "921:119": "tatrāpi toṣo hṛdi kevalo'yaṃ",
    "921:120": "na pāvayiṣyanti hi pāpamāpaḥ||30||",
    "921:121": "spṛṣṭaṃ hi yadyadguṇavadbhirambha-",
    "921:122": "stattatpṛthivyāṃ yadi tīrthamiṣṭam|",
    "921:123": "tasmādguṇāneva paraimi tīrtha-",
    "921:124": "māpastu niḥsaṃśayamāpa eva||31||",
    "921:125": "iti sma tattadbahuyuktiyuktaṃ",
    "921:126": "jagāda cāstaṃ ca yayau vivasvān|",
    "921:127": "tato havirdhūmavivarṇavṛkṣaṃ",
    "921:128": "tapaḥpraśāntaṃ sa vanaṃ viveśa||32||",
    "921:129": "abhyuddhṛtaprajvalitāgnihotraṃ",
    "921:130": "kṛtābhiṣekarṣijanāvakirṇam|",
    "921:131": "jāpyasvanākūjitadevakoṣṭhaṃ",
    "921:132": "dharmasya karmāntamiva pravṛttam||33||",
    "921:133": "kāścinniśāstatra niśākarābhaḥ",
    "921:134": "parīkṣamāṇaśca tapāṃsyuvāsa|",
    "921:135": "sarva parikṣepya tapaśca matvā",
    "921:136": "tasmāttapaḥkṣetratalājjagāma||34||",
    "921:137": "anvavrajannāśramiṇastatastaṃ",
    "921:138": "tadrūpamāhātmyagatairmanobhiḥ|",
    "921:139": "deśādanāryairabhibhūyamānā-",
    "921:140": "nmaharṣayo dharmamivāpayāntam||35||",
    "921:141": "tato jaṭāvalkalacīrakhelāṃ-",
    "921:142": "stapodhanāṃścaiva sa tāndadarśa|",
    "921:143": "tapāṃsi caiṣāmanurudhyamāna-",
    "921:144": "stasthau śive śrīmati vṛkṣamūle||36||",
    "921:145": "athopasṛtyāśramavāsinastaṃ",
    "921:146": "manuṣyavarya parivārya tasthuḥ|",
    "921:147": "vṛddhaśca teṣāṃ bahumānapūrvaṃ",
    "921:148": "kalena sāmnā giramityuvāca||37||",
    "921:149": "tvayyāgate pūrṇa ivāśramo'bhū-",
    "921:150": "tsaṃpadyate śūnya eva prayāte|",
    "921:151": "tasmādimaṃ nārhasi tāta hātuṃ",
    "921:152": "jijīviṣordehamiveṣṭamāyuḥ||38||",
    "921:153": "brahmarṣirājarṣisurarṣijuṣṭaḥ",
    "921:154": "puṇyaḥ samīpe himavān hi śailaḥ|",
    "921:155": "tapāṃsi tānyeva tapodhanānāṃ",
    "921:156": "yatsaṃnikarṣādbahulībhavanti||39||",
    "921:157": "tīrthāni puṇyāyānyabhitastathaiva",
    "921:158": "sopānabhūtāni nabhastalasya",
    "921:159": "juṣṭāni dharmātmabhirātmavadbhi-",
    "921:160": "rdevarṣibhiścaiva maharṣibhiśca||40||",
    "921:161": "itaśca bhūyaḥ kṣamamuttaraiva",
    "921:162": "diksevituṃ dharmīvaśeṣahetoḥ|",
    "921:163": "na tu kṣamaṃ dakṣiṇato budhena",
    "921:164": "padaṃ bhavedekamapi prayātum||41||",
    "921:165": "tapovane'sminnatha niṣkriyo vā",
    "921:166": "saṃkīrṇadharmāpatito'śucirvā|",
    "921:167": "dṛṣṭastvayā yena na te vivatsā",
    "921:168": "tadbrūhi yāvadrucito'stu vāsaḥ||42||",
    "921:169": "ime hi vāñchanti tapaḥsahāyaṃ",
    "921:170": "taponidhānapratīmaṃ bhavantam|",
    "921:171": "vāsastvayā hīndrasamena sārdha",
    "921:172": "bṛhaspaterabhyudayāvahaḥ syāt||43||",
    "921:173": "ityevamukte sa tapasvimadhye",
    "921:174": "tapasvimukhyena manīṣimukhyaḥ|",
    "921:175": "bhavapraṇāśāya kṛtapratijñaḥ",
    "921:176": "svaṃ bhāvāmantargatamācacakṣe||44||",
    "921:177": "ṛjvātmanāṃ dharmabhṛtāṃ munīnā-",
    "921:178": "miṣṭātithitvātsvajanopamānām|",
    "921:179": "evaṃvidhairmā prati bhāvajātaiḥ",
    "921:180": "prītiḥ parā me janitaśca mānaḥ||45||",
    "921:181": "snigdhābhirābhirhṛdayaṃgamābhiḥ",
    "921:182": "samāsataḥ snāta ivāsmi vāgbhiḥ|",
    "921:183": "ratiśca me dharmanavagrahasya",
    "921:184": "vispanditā saṃprati bhūya eva||46||",
    "921:185": "evaṃ pravṛttān bhavataḥ śaraṇyā-",
    "921:186": "natīva saṃdarśitapakṣapātān|",
    "921:187": "yāsyāmi hitveti mamāpi duḥkhaṃ",
    "921:188": "yathaiva bandhūṃstyajatastathaiva||47||",
    "921:189": "svargāya yuṣmākamayaṃ tu dharmo",
    "921:190": "mamābhilāṣastvapunarbhavāya|",
    "921:191": "asminvane yena na me vivatsā",
    "921:192": "bhinnaḥ pravṛttyā hi nivṛttidharmaḥ||48||",
    "921:193": "tannāratirme na parāpacāro",
    "921:194": "vanādito yena parivrajāmi|",
    "921:195": "dharme sthitāḥ pūrvayugānurūpe",
    "921:196": "sarve bhavanto hi maharṣikalpāḥ||49||",
    "921:197": "tato vacaḥ sūnṛtamarthavacca",
    "921:198": "suślakṣṇamojasvi ca garvita ca|",
    "921:199": "śrutvā kumārasya tapasvinaste",
    "921:200": "viśeṣayuktaṃ bahumānamīyuḥ||50||",
    "921:201": "kaściddvijastatra tu bhasmaśāyī",
    "921:202": "prāṃśuḥ śikhī dāravacīravāsāḥ|",
    "921:203": "āpiṅgalākṣastanudīrghaghoṇaḥ",
    "921:204": "kuṇḍaikahasto giramityuvāca||51||",
    "921:205": "dhīmannudāraḥ khalu niścayaste",
    "921:206": "yastvaṃ yuvā janmani dṛṣṭadoṣaḥ|",
    "921:207": "svargāpavargau hi vicārya samya-",
    "921:208": "gyasyāpavarge matirasti so'sti||52||",
    "921:209": "yajñaistapobhirniyamaiśca taistaiḥ",
    "921:210": "svarga yiyāsanti hi rāgavantaḥ|",
    "921:211": "rāgeṇa sārdha ripuṇeva yuddhvā",
    "921:212": "mokṣaṃ parīpsanti tu sattvavantaḥ||53||",
    "921:213": "tadbuddhireṣā yadi niścitā te",
    "921:214": "tūrṇaṃ bhavān gacchatu vindhyakoṣṭham|",
    "921:215": "asau munistatra vasatyarāḍo",
    "921:216": "yo naiṣṭhike śreyasi labdhacakṣuḥ||54||",
    "921:217": "tasmādbhavāñcchroṣyati tattvamārga",
    "921:218": "satyāṃ rucau saṃpratipatsyate ca|",
    "921:219": "yathā tu paśyāmi matistathaiṣā",
    "921:220": "tasyāpi yāsyatyavadhūya buddhim||55||",
    "921:221": "spaṣṭoccaghoṇaṃ vipulāyatākṣaṃ|",
    "921:222": "tāmrādharauṣṭhaṃ sitatīkṣaṇadaṃṣṭram|",
    "921:223": "idaṃ hi vaktuṃ tanuraktajivhaṃ",
    "921:224": "jñeyārṇavaṃ pāsyati kṛtsnameva||56||",
    "921:225": "gambhīratā yā bhavatastvagādhā",
    "921:226": "yā dīptatā yāni ca lakṣaṇāni|",
    "921:227": "ācāryakaṃ prāpsyasi tatpṛthivyāṃ",
    "921:228": "yannarṣibhiḥ pūrvayuge'pyavāptam||57||",
    "921:229": "paramamiti tato nṛpātmaja-",
    "921:230": "stamṛṣijanaṃ pratinandya niryayau|",
    "921:231": "vidhivadanuvidhāya te'pi taṃ",
    "921:232": "praviviśurāśramiṇastapovanam||58||",
    "921:233": "iti buddhacarite mahākāvye",
    "921:234": "tapovanapraveśo nāma saptamaḥ sargaḥ||7||"
}