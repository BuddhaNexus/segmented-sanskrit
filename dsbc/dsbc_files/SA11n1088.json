{
  "SA11n1088:0": "śāntidevaviracitaḥ bodhicaryāvatāraḥ |",
  "SA11n1088:1": " ||om namo buddhāya ||",
  "SA11n1088:2": "1 bodhicittānuśaṃso nāma prathamaḥ paricchedaḥ |",
  "SA11n1088:3": "sugatān sasutān sadharmakāyān",
  "SA11n1088:4": "praṇipatyādarato'khilāṃśca vandyān |",
  "SA11n1088:5": "sugatātmajasaṃvarāvatāraṃ",
  "SA11n1088:6": "kathayiṣyāmi yathāgamaṃ samāsāt ||1 ||",
  "SA11n1088:7": "na hi kiṃcidapūrvamatra vācyaṃ",
  "SA11n1088:8": "na ca saṃgrathanakauśalaṃ mamāsti |",
  "SA11n1088:9": "ata eva na me parārthacintā",
  "SA11n1088:10": "svamano vāsayituṃ kṛtaṃ mayedam ||2 ||",
  "SA11n1088:11": "mama tāvadanena yāti vṛddhiṃ",
  "SA11n1088:12": "kuśalaṃ bhāvayituṃ prasādavegaḥ |",
  "SA11n1088:13": "atha matsamadhātureva paśye-",
  "SA11n1088:14": "daparo'pyenamato'pi sārthako'yam ||3 ||",
  "SA11n1088:15": "kṣaṇasaṃpadiyaṃ sudurlabhā",
  "SA11n1088:16": "pratilabdhā puruṣārthasādhanī |",
  "SA11n1088:17": "yadi nātra vicintyate hitaṃ",
  "SA11n1088:18": "punarapyeṣa samāgamaḥ kutaḥ ||4 ||",
  "SA11n1088:19": "rātrau yathā meghaghanāndhakāre",
  "SA11n1088:20": "vidyut kṣaṇaṃ darśayati prakāśam |",
  "SA11n1088:21": "buddhānubhāvena tathā kadāci-",
  "SA11n1088:22": "llokasya puṇyeṣu matiḥ kṣaṇaṃ syāt ||5 ||",
  "SA11n1088:23": "tasmācchubhaṃ durbalameva nityaṃ",
  "SA11n1088:24": "balaṃ tu pāpasya mahatsughoram |",
  "SA11n1088:25": "tajjīyate'nyena śubhena kena",
  "SA11n1088:26": "saṃbodhicittaṃ yadi nāma na syāt ||6 ||",
  "SA11n1088:27": "kalpānanalpān pravicintayadbhi-",
  "SA11n1088:28": "rdṛṣṭaṃ munīndrairhitametadeva |",
  "SA11n1088:29": "yataḥ sukhenaiva sukhaṃ pravṛddha-",
  "SA11n1088:30": "mutplāvayatyapramitāñjanaughān ||7 ||",
  "SA11n1088:31": "bhavaduḥkhaśatāni tartukāmai-",
  "SA11n1088:32": "rapi sattvavyasanāni hartukāmaiḥ |",
  "SA11n1088:33": "bahusaukhyaśatāni bhoktukāmai-",
  "SA11n1088:34": "rna vimocyaṃ hi sadaiva bodhicittam ||8 ||",
  "SA11n1088:35": "bhavacārakabandhano varākaḥ",
  "SA11n1088:36": "sugatānāṃ suta ucyate kṣaṇena |",
  "SA11n1088:37": "sanarāmaralokavandanīyo",
  "SA11n1088:38": "bhavati smodita eva bodhicitte ||9 ||",
  "SA11n1088:39": "aśucipratimāmimāṃ gṛhītvā",
  "SA11n1088:40": "jinaratnapratimāṃ karotyanarghām |",
  "SA11n1088:41": "rasajātamatīva vedhanīyaṃ",
  "SA11n1088:42": "sudṛḍhaṃ gṛhṇata bodhicittasaṃjñam ||10 ||",
  "SA11n1088:43": "suparīkṣitamaprameyadhībhi-",
  "SA11n1088:44": "rbahumūlyaṃ jagadekasārthavāhaiḥ |",
  "SA11n1088:45": "gatipattanavipravāsaśīlāḥ",
  "SA11n1088:46": "sudṛḍhaṃ gṛhṇata bodhicittaratnam ||11 ||",
  "SA11n1088:47": "kadalīva phalaṃ vihāya yāti",
  "SA11n1088:48": "kṣayamanyat kuśalaṃ hi sarvameva |",
  "SA11n1088:49": "satataṃ phalati kṣayaṃ na yāti",
  "SA11n1088:50": "prasavatyeva tu bodhicittavṛkṣaḥ ||12 ||",
  "SA11n1088:51": "kṛtvāpi pāpāni sudāruṇāni",
  "SA11n1088:52": "yadāśrayāduttarati kṣaṇena |",
  "SA11n1088:53": "śūrāśrayeṇeva mahābhayāni",
  "SA11n1088:54": "nāśrīyate tatkathamajñasattvaiḥ ||13 ||",
  "SA11n1088:55": "yugāntakālānalavanmahānti",
  "SA11n1088:56": "pāpāni yannirdahati kṣaṇena |",
  "SA11n1088:57": "yasyānuśaṃsānamitānuvāca",
  "SA11n1088:58": "maitreyanāthaḥ sudhanāya dhīmān ||14 ||",
  "SA11n1088:59": "tadbodhicittaṃ dvividhaṃ vijñātavyaṃ samāsataḥ |",
  "SA11n1088:60": "bodhipraṇidhicittaṃ ca bodhiprasthānameva ca ||15 ||",
  "SA11n1088:61": "gantukāmasya gantuśca yathā bhedaḥ pratīyate |",
  "SA11n1088:62": "tathā bhedo'nayorjñeyo yāthāsaṃkhyena paṇḍitaiḥ ||16 ||",
  "SA11n1088:63": "bodhipraṇidhicittasya saṃsāre'pi phalaṃ mahat |",
  "SA11n1088:64": "na tvavicchinnapuṇyatvaṃ yathā prasthānacetasaḥ ||17 ||",
  "SA11n1088:65": "yataḥ prabhṛtyaparyantasattvadhātupramokṣaṇe |",
  "SA11n1088:66": "samādadāti taccittamanivartyena cetasā ||18 ||",
  "SA11n1088:67": "tataḥprabhṛti suptasya pramattasyāpyanekaśaḥ |",
  "SA11n1088:68": "avicchinnāḥ puṇyadhārāḥ pravartante nabhaḥsamāḥ ||19 ||",
  "SA11n1088:69": "idaṃ subāhupṛcchāyāṃ sopapattikamuktavān |",
  "SA11n1088:70": "hīnādhimuktisattvārthaṃ svayameva tathāgataḥ ||20 ||",
  "SA11n1088:71": "śiraḥśūlāni sattvānāṃ nāśayāmīti cintayan |",
  "SA11n1088:72": "aprameyeṇa puṇyena gṛhyate sma hitāśayaḥ ||21 ||",
  "SA11n1088:73": "kimutāpratimaṃ śūlamekaikasya jihīrṣataḥ |",
  "SA11n1088:74": "aprameyaguṇaṃ sattvamekaikaṃ ca cikīrṣataḥ ||22 ||",
  "SA11n1088:75": "kasya mātuḥ piturvāpi hitāśaṃseyamīdṛśī |",
  "SA11n1088:76": "devatānāmṛṣīṇāṃ vā brahmaṇāṃ vā bhaviṣyati ||23 ||",
  "SA11n1088:77": "teṣāmeva ca sattvānāṃ svārthe'pyeṣa manorathaḥ |",
  "SA11n1088:78": "notpannapūrvaḥ svapne'pi parārthe saṃbhavaḥ kutaḥ ||24 ||",
  "SA11n1088:79": "sattvaratnaviśeṣo'yamapūrvo jāyate katham |",
  "SA11n1088:80": "yatparārthāśayo'nyeṣāṃ na svārthe'pyupajāyate ||25 ||",
  "SA11n1088:81": "jagadānandabījasya jagadduḥkhauṣadhasya ca |",
  "SA11n1088:82": "cittaratnasya yatpuṇyaṃ tatkathaṃ hi pramīyatām ||26 ||",
  "SA11n1088:83": "hitāśaṃsanamātreṇa buddhapūjā viśiṣyate |",
  "SA11n1088:84": "kiṃ punaḥ sarvasattvānāṃ sarvasaukhyārthamudyamāt ||27 ||",
  "SA11n1088:85": "duḥkhamevābhidhāvanti duḥkhaniḥsaraṇāśayā |",
  "SA11n1088:86": "sukhecchayaiva saṃmohāt svasukhaṃ ghnanti śatruvat ||28 ||",
  "SA11n1088:87": "yasteṣāṃ sukharaṅkāṇāṃ pīḍitānāmanekaśaḥ |",
  "SA11n1088:88": "tṛptiṃ sarvasukhaiḥ kuryātsarvāḥ pīḍāśchinatti ca ||29 ||",
  "SA11n1088:89": "nāśayatyapi saṃmohaṃ sādhustena samaḥ kutaḥ |",
  "SA11n1088:90": "kuto vā tādṛśaṃ mitraṃ puṇyaṃ vā tādṛśaṃ kutaḥ ||30 ||",
  "SA11n1088:91": "kṛte yaḥ pratikurvīta so'pi tāvatpraśasyate |",
  "SA11n1088:92": "avyāpāritasādhustu bodhisattvaḥ kimucyatām ||31 ||",
  "SA11n1088:93": "katipayajanasattradāyakaḥ",
  "SA11n1088:94": "kuśalakṛdityabhipūjyate janaiḥ |",
  "SA11n1088:95": "kṣaṇamaśanakamātradānataḥ",
  "SA11n1088:96": "saparibhavaṃ divasārdhayāpanāt ||32 ||",
  "SA11n1088:97": "kimu niravadhisattvasaṃkhyayā",
  "SA11n1088:98": "niravadhikālamanuprayacchataḥ |",
  "SA11n1088:99": "gaganajanaparikṣayākṣayaṃ",
  "SA11n1088:100": "sakalamanorathasaṃprapūraṇam ||33 ||",
  "SA11n1088:101": "iti sattrapatau jinasya putre",
  "SA11n1088:102": "kaluṣaṃ sve hṛdaye karoti yaśca |",
  "SA11n1088:103": "kaluṣodayasaṃkhyayā sa kalpān",
  "SA11n1088:104": "narakeṣvāvasatīti nātha āha ||34 ||",
  "SA11n1088:105": "atha yasya manaḥ prasādameti",
  "SA11n1088:106": "prasavettasya tato'dhikaṃ phalam |",
  "SA11n1088:107": "mahatā hi balena pāpakaṃ",
  "SA11n1088:108": "jinaputreṣu śubhaṃ tvayatnataḥ ||35 ||",
  "SA11n1088:109": "teṣāṃ śarīrāṇi namaskaromi",
  "SA11n1088:110": "yatroditaṃ tadvaracittaratnam |",
  "SA11n1088:111": "yatrāpakāro'pi sukhānubandhī",
  "SA11n1088:112": "sukhākarāṃstān śaraṇaṃ prayāmi ||36 ||",
  "SA11n1088:113": "iti prajñākaramativiracitāyāṃ bodhicaryāvatārapañjikāyāṃ",
  "SA11n1088:114": "bodhicittānuśaṃsāvivaraṇaṃ nāma prathamaḥ paricchedaḥ ||"
}