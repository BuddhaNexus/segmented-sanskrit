{
  "SA14n1192:0": "5. dhyānapāramitāsamāsaḥ",
  "SA14n1192:1": "atha dhyānavidhau yogaṃ kuryāj jñānavivṛddhaye |",
  "SA14n1192:2": "sukhaṃ hi kartuṃ lokānāṃ jñānālokādanugraham || 1 ||",
  "SA14n1192:3": "prasīdatyadhikaṃ jñānaṃ dhyānānmanasi nirmale |",
  "SA14n1192:4": "śaradutsāritaghane nabhasīvendumaṇḍalam || 2 ||",
  "SA14n1192:5": "viśuddhaśīlaḥ kalyāṇaiḥ sahāyaiḥ sahitairhitaiḥ |",
  "SA14n1192:6": "alpakṛtyaḥ praśāntātma smṛtyadhiṣṭhānaveṣṭitaḥ || 3 ||",
  "SA14n1192:7": "nivasan vṛkṣamūleṣu śādvalāstīrṇabhūmiṣu |",
  "SA14n1192:8": "anupaskṛtaramyeṣu vanapuṣpasugandhiṣu || 4 ||",
  "SA14n1192:9": "dhyānasācivyadhīreṣu saṃtuṣṭajanaveśmasu |",
  "SA14n1192:10": "jananirghoṣamūkatvād gambhīrāvasthiteṣviva || 5 ||",
  "SA14n1192:11": "pratyaraṇyaniviṣṭeṣu śūnyeṣvāyataneṣu vā |",
  "SA14n1192:12": "kuñjeṣu ca mahīdhrāṇāṃ siṃhanādānunādiṣu || 6 ||",
  "SA14n1192:13": "yatra kva cana vā deśe saṃsargakleśavarjite |",
  "SA14n1192:14": "paryaṅkena sukhāsīnaḥ śarīram ṛju dhārayan || 7 ||",
  "SA14n1192:15": "upasthāpya smṛtimayīṃ rakṣāṃ abhimukhīṃ hṛdi |",
  "SA14n1192:16": "kṛpayā kuvitarkāṇāṃ kṛtvevākṣaṇaghoṣaṇām || 8 ||",
  "SA14n1192:17": "prajñāparicayasyāyāṃ kālo me na tu nirvṛteḥ |",
  "SA14n1192:18": "na hi sattvān anirvāpya svayaṃ nirvātum utsahe || 9 ||",
  "SA14n1192:19": "iti lokahitāvekṣī buddhabhāvagataspṛhaḥ |",
  "SA14n1192:20": "kuryāt sātatyayogena dhyānārambhasamudyamam || 10 ||",
  "SA14n1192:21": "na hi viśramya viśramya mathnannagnimavāpnuyāt |",
  "SA14n1192:22": "sa eva yogo yoge'pi viśeṣādhigamādṛte || 11 ||",
  "SA14n1192:23": "ekatraiva ca badhnīyād dṛḍham ālambane manaḥ |",
  "SA14n1192:24": "anyānyālambanagrāhaḥ kliśnātyevākulaṃ manaḥ || 12 ||",
  "SA14n1192:25": "vidarśanād vīryabalāllīyamānaṃ samuddharet |",
  "SA14n1192:26": "uddhanyamānaṃ ca manaḥ praśamena nivārayet || 13 ||",
  "SA14n1192:27": "samyaggatamupekṣitaṃ samādhibalaniścalam |",
  "SA14n1192:28": "tatrāpi vā tanmayaḥ syāt sugatajñānalabdhaye || 14 ||",
  "SA14n1192:29": "na ca dhyānasukhāsvādaḥ pāratantryamanukramet |",
  "SA14n1192:30": "na hi svasukhamātrārthamayam ārambhavistaraḥ || 15 ||",
  "SA14n1192:31": "śarīrajīvitāpekṣī dainyopahatamānasaḥ |",
  "SA14n1192:32": "na kuryād vīryaśaithilyamapyādīpte svamūrdhani || 16 ||",
  "SA14n1192:33": "lakṣayitvā nimittāni manastasya samādhaye |",
  "SA14n1192:34": "bhraśyamānaṃ prayuñjīta smṛtyāvahitayā punaḥ || 17 ||",
  "SA14n1192:35": "mano nivaraṇebhyaśca vipakṣairvinivartayet |",
  "SA14n1192:36": "svecchāprayātaṃ dviradam aṅkuśākarṣaṇairiva || 18 ||",
  "SA14n1192:37": "atha nīvaraṇavyādhināśaprasvasthamānasaḥ |",
  "SA14n1192:38": "dāridryādiva nirmukto mahato vyasanādiva || 19 ||",
  "SA14n1192:39": "prītiyuktena manasā kāmadoṣān vicārayet |",
  "SA14n1192:40": "tadviyogopalabhyāṃ ca parāṃ sukhaparamparām || 20 ||",
  "SA14n1192:41": "vidyududdyotacapalāḥ phenāṃśukanibhātmakāḥ |",
  "SA14n1192:42": "svapnavat pelavāsvādā vañcanārthamivoditāḥ || 21 ||",
  "SA14n1192:43": "pitṛṇāmapi putreṣu putrāṇāṃ ca pitṛṣvapi |",
  "SA14n1192:44": "prītisarvasvabhūteṣu suhṛtsu suhṛdāmapi || 22 ||",
  "SA14n1192:45": "guṇapracayabaddhasya vyūḍhesu samareṣvapi |",
  "SA14n1192:46": "darśitasthairyasārasya snehasetorvidāriṇaḥ || 23 ||",
  "SA14n1192:47": "iha paryeṣṭiduḥkhasya paratra narakasya ca |",
  "SA14n1192:48": "hetubhūtā yataḥ kāmāḥ kāmayeta na tān ataḥ || 24 ||",
  "SA14n1192:49": "yadāśrayo vitarko'pi prajñācakṣurnimīlanaḥ |",
  "SA14n1192:50": "ātmano'pi parasyāpi vighātāya pravartate || 25 ||",
  "SA14n1192:51": "ātmakāmairapi ca ye sarvathāpi vivarjitāḥ |",
  "SA14n1192:52": "parārthakāmastān kāmāṃstyaktvā kathamanusmaret || 26 ||",
  "SA14n1192:53": "tṛptireṣāṃ na saṃprāptyā nāhanyahani sevayā |",
  "SA14n1192:54": "naiva saṃnicayenāpi ko'nyo vyādhirataḥ paraḥ || 27 ||",
  "SA14n1192:55": "yadāsvādahato naiva svārthamapyavabudhyate |",
  "SA14n1192:56": "unmattapānapratimān kastān sahṛdayaḥ smaret || 28 ||",
  "SA14n1192:57": "ityevaṃ sarvato duṣṭān kāmāṃstasyānupaśyataḥ |",
  "SA14n1192:58": "tataḥ saṃkucitaṃ cittaṃ naiṣkramye'bhiprasīdati || 29 ||",
  "SA14n1192:59": "vivekajaṃ prītisukhaṃ tataḥ prasrabdhilabdhijam |",
  "SA14n1192:60": "prāpnoti cittasyaikāgryaṃ prathamadhyānasaṃjñitam || 30 ||",
  "SA14n1192:61": "sa vitarkavicārāṇāṃ kāmānāmiva duṣṭatām |",
  "SA14n1192:62": "puṣyāṃstatpraśamānveṣī samādhiprītijaṃ sukham || 31 ||",
  "SA14n1192:63": "adhyātmasaṃprasādācca cittaikāgratayā ca tat |",
  "SA14n1192:64": "dvitīyaṃ dhyānamityāhuradvitīyā maharṣayaḥ || 32 ||",
  "SA14n1192:65": "utplavaṃ manaso dṛṣṭvā prīteratha virajya saḥ |",
  "SA14n1192:66": "tṛtīyaṃ dhyānamāpnoti smṛtyupekṣāsamanvitam || 33 ||",
  "SA14n1192:67": "sukhabhogamapi tyaktvā sukhaduḥkhanirākṛtam |",
  "SA14n1192:68": "viśuddhaṃ smṛtyupekṣābhyāṃ ceturthaṃ dhyānamaśnute || 34 ||",
  "SA14n1192:69": "abhijñā labhate pañca sa ca tatrānugāminīḥ |",
  "SA14n1192:70": "rājyastha iva dharmātmā hrīkīrtiśrīmatidyutīḥ || 35 ||",
  "SA14n1192:71": "pratyekajinalabdhāśca śrāvakīyā vyatītya ca |",
  "SA14n1192:72": "tā bhavantyadhikā dūraṃ parārthasamudāgamāt || 36 ||",
  "SA14n1192:73": "sa hi matsariṇastyāge śīle tadvikalānapi |",
  "SA14n1192:74": "kopanān kṣāntisauratye kusīdān vīryasaṃpadi || 37 ||",
  "SA14n1192:75": "vikṣiptacetaso dhyāne prajñāyāṃ tannirākṛtān |",
  "SA14n1192:76": "niyojayati kāruṇyādaśrāntācāravikramaḥ || 38 ||",
  "SA14n1192:77": "ato'cyutābhirdīptābhirbhābhirlokāvabhāsanam |",
  "SA14n1192:78": "marīcibhirivādityāḥ kurute'nantagocaram || 39 ||",
  "SA14n1192:79": "atha pāpakṛtaḥ sattvān patato narakādiṣu |",
  "SA14n1192:80": "kṣīṇapuṇyāyuṣaścaiva devāñchāśvatamāninaḥ || 40 ||",
  "SA14n1192:81": "taistairduḥkhaviśeṣaiśca lokaṃ kāraṇayāhatam |",
  "SA14n1192:82": "tatra divyaprabhāveṇa cakṣuṣā sā vilokayan || 41 ||",
  "SA14n1192:83": "tīvramāyāti kāruṇyaṃ kāruṇyān na pramādyati |",
  "SA14n1192:84": "parārtheṣvapramattaśca yātyacintyaprabhāvatām || 42 ||",
  "SA14n1192:85": "athānyalokadhātusthān sampaśyati tathāgatān |",
  "SA14n1192:86": "buddhakṣetraguṇavyūhān saṃghasyaiva ca saṃpadaḥ || 43 ||",
  "SA14n1192:87": "bodhisattvarṣabhāṇāṃ ca viśuddhācāragocaram |",
  "SA14n1192:88": "sarvalokahitodarkaṃ śrīmaccaritamīkṣate || 44 ||",
  "SA14n1192:89": "tatra ca praṇidhistasya sukhenaiva samṛdhyati |",
  "SA14n1192:90": "parārthapariṇāmācca śīlasyaiva ca saṃpadaḥ || 45 ||",
  "SA14n1192:91": "atimānuṣayā śrutyā divyayārthaviśuddhayā |",
  "SA14n1192:92": "śṛṇvannuccāvacā vāco vidūre'pyavidūravat || 46 ||",
  "SA14n1192:93": "kṛpādūracarairuktāḥ pāruṣyavirasākṣarāḥ |",
  "SA14n1192:94": "antardīptasya kopāgnerniścarantīrivārciṣaḥ || 47 ||",
  "SA14n1192:95": "apsarogītasacivān bhūṣaṇasvanaśībharān |",
  "SA14n1192:96": "divyatūryaninādāṃśca vināśaikarasānapi || 48 ||",
  "SA14n1192:97": "niṣevyamāṇān rāgāndhairamitrānmitrārūpiṇaḥ |",
  "SA14n1192:98": "vīkṣya vrajati kāruṇyaṃ teṣāṃ vāñcanayā tayā || 49 ||",
  "SA14n1192:99": "bhayādduḥkhaviśeṣācca so'vispaṣṭapadākṣaraiḥ |",
  "SA14n1192:100": "nārakairārtarasitairhṛdīvābhihatastataḥ || 50 ||",
  "SA14n1192:101": "paramālambate vīryaṃ majjāgatamahākṛpaḥ |",
  "SA14n1192:102": "tīkṣṇāgreṇa pratodena sadaśva iva coditaḥ || 51 ||",
  "SA14n1192:103": "nānālokasthitebhyo'tha jinebhyo dharmadeśanāḥ |",
  "SA14n1192:104": "śṛṇoti sarvasattvānāṃ nirvāṇakāṅkṣayākṣayāḥ || 52 ||",
  "SA14n1192:105": "tataḥ sa paracitteṣu vijñāyānuśayāśayān |",
  "SA14n1192:106": "puṇyāṅkurān ropayati jñānasādhanavānnavān || 53 ||",
  "SA14n1192:107": "smṛtvā pūrvanivāsaṃ ca kalpakoṭisahasraśaḥ |",
  "SA14n1192:108": "paśyan puṇyāni lokānāṃ tathendriyabalābalam || 54 ||",
  "SA14n1192:109": "tadāśrayavaśādṛddhyā so'nekīkṛtavigrahaḥ |",
  "SA14n1192:110": "avandhyakathanaṃ yāti yathābhājanadeśanāt || 55 ||",
  "SA14n1192:111": "kva cid arkasahasradīptināpya-",
  "SA14n1192:112": "visaṃvāditakāntisaṃpadā |",
  "SA14n1192:113": "vapuṣā munirājalakṣaṇaḥ",
  "SA14n1192:114": "sphuṭacitreṇa samantalakṣmaṇā || 56 ||",
  "SA14n1192:115": "janayannayanotsavaṃ nṛṇāṃ",
  "SA14n1192:116": "vacasā hlādaviśeṣamācaran |",
  "SA14n1192:117": "sa karotyamṛtaprakāśanaṃ",
  "SA14n1192:118": "jinabhāvāya jinādhimuktiṣu || 57 ||",
  "SA14n1192:119": "praśamottarayā muniśriyā",
  "SA14n1192:120": "kva cid atyārthaviśiṣṭaceṣṭayā |",
  "SA14n1192:121": "kurute muniśiṣyarūpabhṛdvi-",
  "SA14n1192:122": "nayaṃ tadvinayārhacetasām || 58 ||",
  "SA14n1192:123": "abhisāritapādapaṅkajaḥ",
  "SA14n1192:124": "suracūḍāmaṇibhirmahendravat |",
  "SA14n1192:125": "dhanado dhanado yathā kva cit",
  "SA14n1192:126": "kuha cidbrahmavadadbhutadyutiḥ || 59 ||",
  "SA14n1192:127": "kva cid unmiṣitatrilocanaḥ",
  "SA14n1192:128": "śaśīlekhāmalamaulibhūṣaṇaḥ |",
  "SA14n1192:129": "amarādhipabhāsuradyutirbu-",
  "SA14n1192:130": "jagendraśriyamudvahan kva cit || 60 ||",
  "SA14n1192:131": "kuliśānalapiṅgalāṅguliḥ",
  "SA14n1192:132": "kuha cid guhyakarājarājavat |",
  "SA14n1192:133": "amitājinalakṣmavān kva cid",
  "SA14n1192:134": "guṇaraśmirmunicandramā iva || 61 ||",
  "SA14n1192:135": "sphuṭakaustubharatnaraśmibhirvi-",
  "SA14n1192:136": "puloraḥsthalabhāsuradyutiḥ |",
  "SA14n1192:137": "garuḍadhvajarājadṛk kva cit",
  "SA14n1192:138": "kuha ciccaiva halāyudhadyutiḥ || 62 ||",
  "SA14n1192:139": "sitaśaktiracintyaśaktimān",
  "SA14n1192:140": "kuha ciccāruśikhaṇḍivāhanaḥ |",
  "SA14n1192:141": "udayāstanagendrabhūṣaṇaḥ",
  "SA14n1192:142": "śaśisūryāmalarūpavān kva cit || 63 ||",
  "SA14n1192:143": "kuha cid dhutabhuṅmarutvatāṃ",
  "SA14n1192:144": "vapuṣānyatra narāśrayāśinām |",
  "SA14n1192:145": "vāruṇadyutim udvahan kva cit",
  "SA14n1192:146": "kuha cinmanmathacāruvigrahaḥ || 64 ||",
  "SA14n1192:147": "lalitāṃ pramadānarākṛtiṃ",
  "SA14n1192:148": "naranārīratisaṃgalālasaḥ |",
  "SA14n1192:149": "kva cid eva tapodhanaśriyaṃ",
  "SA14n1192:150": "vidadhat kāmaviraktamānasaḥ || 65 ||",
  "SA14n1192:151": "hṛdayāni harannṛṇāṃ kva cid",
  "SA14n1192:152": "guruśiṣyakṣitipālavṛttibhiḥ |",
  "SA14n1192:153": "narakeṣvapi ca parabhāvato",
  "SA14n1192:154": "vidadhadduḥkhavimokṣaṇakṣaṇam || 66 ||",
  "SA14n1192:155": "jagatām adhimuktivistarairatha",
  "SA14n1192:156": "so'nekavidhairviceṣṭitaiḥ |",
  "SA14n1192:157": "karuṇāguṇasaṃtatastataḥ",
  "SA14n1192:158": "kurute lokahitaṃ tatastataḥ || 67 ||",
  "SA14n1192:159": "samavāpya viśeṣasaṃpadaṃ",
  "SA14n1192:160": "vipulāṃ dhyānaguṇaśrayādimām |",
  "SA14n1192:161": "prayateta viśeṣavattaraṃ",
  "SA14n1192:162": "nidhicihneṣvavisaṃvadatsviva || 68 ||",
  "SA14n1192:163": "kuśale sthitirapyanūrjitā",
  "SA14n1192:164": "kim ahāniḥ śithilavratocitā |",
  "SA14n1192:165": "prayateta vivṛddhaye tataḥ",
  "SA14n1192:166": "parihāṇistu viparyayādataḥ || 69 ||",
  "SA14n1192:167": "sulabhaśca samādhirudyamād",
  "SA14n1192:168": "anurakṣā punarasya duṣkarā |",
  "SA14n1192:169": "sahasā vijigīṣuṇā yathā",
  "SA14n1192:170": "vijitasya praśamapratikriyā || 70 ||",
  "SA14n1192:171": "manasaḥ parivṛttilāghavaṃ",
  "SA14n1192:172": "paramaṃ tatra na viśvasedataḥ |",
  "SA14n1192:173": "anavāpya mahīmivācalām",
  "SA14n1192:174": "acalāṃ bhūmimabhīradurgamām || 71 ||",
  "SA14n1192:175": "abhisaṃskṛta[mārgacāriṇaḥ]",
  "SA14n1192:176": "patanāntā hi samādhivistarāḥ |",
  "SA14n1192:177": "ata uttamamārgabhāvanām",
  "SA14n1192:178": "avalambeta vikalpavarjanāt || 72 ||",
  "SA14n1192:179": "sucinityasukhātmakalpanaṃ",
  "SA14n1192:180": "kapaṭam saṃskṛtadambhasaṃbhavām |",
  "SA14n1192:181": "samavekṣya na bhāvakalpanā-",
  "SA14n1192:182": "praṇayavyāpṛtamānaso bhavet || 73 ||",
  "SA14n1192:183": "viśade'pyupalambhasaṃbhave",
  "SA14n1192:184": "vrajati kleśaśaravyatām ataḥ |",
  "SA14n1192:185": "vyatiyāti tu māragocaraṃ",
  "SA14n1192:186": "tamanarthaṃ praśamayya sarvathā || 74 ||",
  "SA14n1192:187": "na hi niśrayadośaduṣito",
  "SA14n1192:188": "bhavati dhyānavidhirviśuddhaye |",
  "SA14n1192:189": "calatānugato hi niśrayaḥ",
  "SA14n1192:190": "sakhaṭuṅkastata eva kathyate || 75 ||",
  "SA14n1192:191": "vyavahāravidhiprasiddhaye",
  "SA14n1192:192": "pratipattadbhavatīti kathyate |",
  "SA14n1192:193": "na hi kiṃ cid udeti kutra cit",
  "SA14n1192:194": "sadasatsaṃbhavayuktyasaṃbhavāt || 76 ||",
  "SA14n1192:195": "gaganena samānamānasastri-",
  "SA14n1192:196": "bhavādapyu atha vītaniśrayaḥ |",
  "SA14n1192:197": "avikalpitadhīraceṣṭito",
  "SA14n1192:198": "vacanenāpratiyatnaśobhinā || 77 ||",
  "SA14n1192:199": "kurute sa ca laukikīṃ kriyāṃ",
  "SA14n1192:200": "jagadekāntahitānuvartinīm |",
  "SA14n1192:201": "na samādhibalācca hīyate",
  "SA14n1192:202": "vaśavartitvamavāpya cetasaḥ || 78 ||",
  "SA14n1192:203": "tataḥ paraṃ parahitatatparodyataiḥ",
  "SA14n1192:204": "samādhibhirvidhivihitaprayojanaiḥ |",
  "SA14n1192:205": "vivardhate ghanasamaye yathodadhiḥ",
  "SA14n1192:206": "saridvadhūsamupahṛtairnavāmbubhiḥ || 79 ||",
  "SA14n1192:207": " || dhyānapāramitāsamāsaḥ ||"
}