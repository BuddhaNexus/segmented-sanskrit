{
    "298:0": "2 vimalā nāma dvitīyā bhūmiḥ |",
    "298:1": "upakramagāthāḥ |",
    "298:2": "śrutvaitaduttamaṃ sthānaṃ bhūmyāḥ śreṣṭhaṃ manoramam |",
    "298:3": "prasannamanasaṃkalpaharṣitāḥ sugatātmajāḥ || 1 ||",
    "298:4": "abhyutthitā āsanebhya abhyudgamya khagapathe |",
    "298:5": "abhyokiranti kusumaiḥ sādhviti vyāharī girā || 2 ||",
    "298:6": "sādhu sādhu mahāprājña vajragarbha viśārada |",
    "298:7": "yannirdiṣṭā tvayā bhūmi bodhisattvāna yā carī || 3 ||",
    "298:8": "parṣaddhi viprasannā tu vimukticandraḥ pṛcchati |",
    "298:9": "uttariṃ kīrtiyā bhūmiṃ dvitīyāṃ sugatātmajāḥ || 4 ||",
    "298:10": "kīdṛśā manasaṃkalpā dvitīyāmabhilakṣataḥ |",
    "298:11": "pravyāhara mahāprājña śrotukāmā jinātmajāḥ || 5 ||",
    "298:12": "upasaṃhāragāthāḥ |",
    "298:13": "te mārdavārjavamṛdūkarmaṇīyacittāḥ",
    "298:14": "kalyāṇaāśaya damāśayatābhyupetāḥ |",
    "298:15": "saṃsargapekṣavigatāśca udārabuddhi",
    "298:16": "māhātmya āśayavid dvitīyākramanti || 6 ||",
    "298:17": "atra sthitā guṇadharāḥ kuśalopapetāḥ",
    "298:18": "prāṇātipātavigatā avihiṃsacittāḥ |",
    "298:19": "adattadānapagatāḥ paradāratāṃ ca",
    "298:20": "satyānvitā apiśunaḥ puruṣapradhānāḥ || 7 ||",
    "298:21": "parabhogabhidyavigatā vidu maitracittāḥ",
    "298:22": "samyakpathe upagatā aśaṭhajñakāśca |",
    "298:23": "nirmāṇakāyagrahaṇāśca supeśalāśca",
    "298:24": "rakṣanti śāstuśaraṇaṃ sada apramattāḥ || 8 ||",
    "298:25": "duḥkhāni yāni niraye tatha tiryagyonau",
    "298:26": "yamaśāsane jvalitaāśrayanityupetāḥ |",
    "298:27": "sarve ti pāpapatitākṣalāḥ prabhonti",
    "298:28": "hantā vivarjiya upemahi satyadharmam || 9 ||",
    "298:29": "ādau ca kṛtva manujānupapattimiṣṭāṃ",
    "298:30": "yāvadbhavāgramaraṇāśayadhyānu śikṣām |",
    "298:31": "pratyekayānamatha śrāvakabuddhayānaṃ",
    "298:32": "sarve ito daśabhi śuklapathaiḥ prabhūtam || 10 ||",
    "298:33": "evaṃ viditva satataṃ vidu apramattāḥ",
    "298:34": "śīleṣu saṃsthita parānapi sthāpayanti |",
    "298:35": "bhūyottare karuṇaāśayatābhyupetāḥ",
    "298:36": "sattvān viditva dukhitān kṛpa saṃjanenti || 11 ||",
    "298:37": "hanto vidṛṣṭipatitā imi bālabuddhī",
    "298:38": "krodhopanāhadrutacitta vivādaprāptāḥ |",
    "298:39": "satataṃ atṛpta viṣaye bhuyu prārthayanti",
    "298:40": "trinidāna sattva parimocayitavya ete || 12 ||",
    "298:41": "mahaandhakāratamasāvṛta mohachannāḥ",
    "298:42": "kāntāramārgapatitā mahadṛṣṭijāle |",
    "298:43": "saṃsārapañjaragatā ripu dharṣayanti",
    "298:44": "mokṣāmyahaṃ namucipañjaramadhyaprāptān || 13 ||",
    "298:45": "kleśormibhihriyata oghacaturnimagnā",
    "298:46": "traidhātuke dukhaśataiḥ paripīḍyamānāḥ |",
    "298:47": "skandhālayābhyupagatā vṛtaātmasaṃjñā",
    "298:48": "teṣārthi yujyami ahaṃ dukhamocanārtham || 14 ||",
    "298:49": "avasṛjya śreṣṭhapravaraṃ ima buddhajñānaṃ",
    "298:50": "sati eva niḥsaraṇi hīnamatiṃ janenti |",
    "298:51": "sthāpemi tān vimalajñāni tathāgatānāṃ",
    "298:52": "vīryārabhanti atulaṃ vidu bodhihetoḥ || 15 ||",
    "298:53": "atra sthitā guṇaśatopacitā maharṣi",
    "298:54": "paśyanti naikasugatānapi pūjayanti |",
    "298:55": "teṣāṃ śubhaṃ bhuyu uttapyati kalpakoṭyāṃ",
    "298:56": "kāsīsakāñcanavaraṃ ca yathā nikṣiptam || 16 ||",
    "298:57": "atra sthitā jinasutā nṛpacakravarti",
    "298:58": "bhūtvā praṇenti daśabhiḥ kuśalebhi sattvān |",
    "298:59": "yaccaiva saṃci śubhasaṃcaya saṃcinanti",
    "298:60": "trātā bhavema jagato daśabhirbalāḍhyaiḥ || 17 ||",
    "298:61": "ākāṅkṣamāṇa vijahitva ca rajabhogān",
    "298:62": "pravrajya śāsanavare upagamya dhīrāḥ |",
    "298:63": "vīryānvitā labhiya śreṣṭhavaraṃ samādhiṃ",
    "298:64": "buddhā sahasra paripūrṇa kṣeṇe dṛśanti || 18 ||",
    "298:65": "evaṃvidhā gaṇanayā bhuyu anya nekā",
    "298:66": "ādarśayanti vṛṣabhī sthita atra bhūmau |",
    "298:67": "ata uttari praṇidhijñānavarābhyupetā",
    "298:68": "naikā vikurvitavidhau vinayanti sattvān || 19 ||",
    "298:69": "ityeṣā dvitiyā bhūmirnirdiṣṭā sugatātmajāḥ |",
    "298:70": "sarvalokahitaiṣīṇāṃ bodhisattvānanuttamā || 20 ||"
}