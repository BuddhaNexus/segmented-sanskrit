{
  "SA15n2859:3": "Anupalabdhirahasya",
  "SA15n2859:10": "siddhānte viprakīrṇasyānupalambhasya yādṛśī |",
  "SA15n2859:14": "rūpaniṣṭheha tādṛśyāḥ saṅgrahaḥ kriyate sphuṭaḥ ||1 ||",
  "SA15n2859:21": "pratiṣedhe sādhye'nupalabdhis tṛtīyaṃ liṅgam |",
  "SA15n2859:22": "tac ca yady upalabdhivirahamātram ,",
  "SA15n2859:23": "tat kathaṃ kasyacit pratipattiḥ",
  "SA15n2859:24": "pratipattihetur vā ,",
  "SA15n2859:25": "tasyāpi vā kathaṃ",
  "SA15n2859:26": "pratipattiḥ ?",
  "SA15n2859:27": "tasmād abhakṣyādivat",
  "SA15n2859:28": "paryudāsavṛttyā'nyopalabdhir evānupalabdhiḥ |",
  "SA15n2859:35": "tatrāpi yady anyamātrasya ,",
  "SA15n2859:36": "tadaikasya kasyacid upalabdhau sarvasya niṣedhaprasaṅgaḥ |",
  "SA15n2859:37": "iṣyata eva tādātmyaniṣedhaḥ sarvasyeti cet ,",
  "SA15n2859:38": "taddeśaniṣedho'py anivāryaḥ |",
  "SA15n2859:39": "tad ayaṃ viśeṣaḥ :",
  "SA15n2859:46": "vedye yatra hi yanmatir niyamataḥ syād vā na vā",
  "SA15n2859:47": "tasya",
  "SA15n2859:51": "dhīr iṣṭā no'nupalabdhir anyavirahajñānasthiter",
  "SA15n2859:52": "āśrayaḥ | 2 ab",
  "SA15n2859:59": "yatra vedyamāne yasya matiḥ syād iti",
  "SA15n2859:60": "deśakālasvabhāvaviprakarṣiṇāṃ niṣedhaḥ ,",
  "SA15n2859:61": "niyamena iti upalambhakāraṇāntaravaikalyasya |",
  "SA15n2859:62": "etena dṛśyaviśeṣaṇaprāptasyābhāvajñānasthitir iti darśitam |",
  "SA15n2859:63": "ato na sarvasya niṣedhaprasaṅgaḥ |",
  "SA15n2859:67": "yatra ca vedyamāne yanmatir niyamena syāt ,",
  "SA15n2859:68": "tasyaiva dhīr iṣṭā'nyasya",
  "SA15n2859:69": "dvitīyasyābhāvaniścayaprabandhākṣepāya kṣamā iti | ( 1 )",
  "SA15n2859:82": "etena na virahamātram ,",
  "SA15n2859:83": "paryudāsavṛttyā tv anyaviśeṣabuddhir ity uktam ,",
  "SA15n2859:84": "atra ca tasyaivaikākina iti sāmarthyāt",
  "SA15n2859:85": "anyathetarasyāniṣiddhopaladher adhāvāsiddheḥ tad yathā neha ghaṭa",
  "SA15n2859:86": "upalabhyasyānupalabdheḥ ,",
  "SA15n2859:87": "yathā kvacit kiñcid iti |",
  "SA15n2859:88": "tatra dṛśyasya iti svabhāvaviśeṣa upalambhapratyayāntarasākalyaṃ coktaṃ draṣṭavyam |",
  "SA15n2859:89": "anupalabdher iti pratiyogina upalabdher ity arthaḥ |",
  "SA15n2859:96": "tac ca pratiyogīhety ādhāratāprāptaṃ bhūtalam ,",
  "SA15n2859:97": "anyad vaikendriyajñāsaṃsargi ,",
  "SA15n2859:98": "tadanyo vā ,",
  "SA15n2859:99": "yasmin vedyamāne niṣedhya upalabhyam eva iti",
  "SA15n2859:100": "sāmānyokteḥ |",
  "SA15n2859:101": "tatra , yadhi bhūbhāga upalabhya",
  "SA15n2859:102": "eva kumbhasambhavaḥ sādhyaḥ ,",
  "SA15n2859:103": "tadā sa eva pratiyogī |",
  "SA15n2859:104": "kim anyāpekṣayā ?",
  "SA15n2859:105": "yadā tu nabhasi ,",
  "SA15n2859:106": "tadā'pi tad evālokasañjñitam |",
  "SA15n2859:107": "anyo vā ghaṭādir",
  "SA15n2859:108": "aniyatasthitiḥ |",
  "SA15n2859:115": "spṛśyaniṣedhe tv ayam eva |",
  "SA15n2859:116": "etenaikajñānasaṃsargī",
  "SA15n2859:117": "pratiyogī vyākhyātaḥ ,",
  "SA15n2859:118": "kvacit punar anyathā'pi ,",
  "SA15n2859:119": "yathā pradīpaṃ kavalayitur neha raso dṛśyānupalabdher",
  "SA15n2859:120": "iti sparśa eva pratiyogī |",
  "SA15n2859:127": "tayor hi sator naikarūpaniyatā pratipattiḥ , pānakavat |",
  "SA15n2859:128": "dūrād rūpadarśane'pi tarhi kathaṃ",
  "SA15n2859:129": "rasaniṣedho na bhavati ?",
  "SA15n2859:130": "deśaviprakarṣiṇa",
  "SA15n2859:131": "upalambhayogyatāyā abhāvāt ,",
  "SA15n2859:132": "prāpyakāritvād ghrāṇarasanasparśanānām |",
  "SA15n2859:133": "uktaṃ ca : yasmin vedhyamāne yad avaśyaṃ vedyata eva iti |",
  "SA15n2859:134": "nāpi rasānubhave rūpaniṣedhaḥ ,",
  "SA15n2859:135": "tadā'pi tallakṣaṇāyogāt | ( 2 )",
  "SA15n2859:148": "evaṃ śabdopalabdhyā'pi na rūpaniṣedhaḥ ,",
  "SA15n2859:149": "samandhakāre hi sato'pi rūpasya",
  "SA15n2859:150": "jñānāvyabhicāriṇī na śabdavittiḥ |",
  "SA15n2859:151": "āloke tu na tāvad dṛśyamānasyaiva niṣedhaḥ adṛṣṭasya",
  "SA15n2859:152": "tu yogyasya niṣedhe'pi na doṣaḥ ,",
  "SA15n2859:153": "tallakṣaṇātyāgāt |",
  "SA15n2859:154": "etena devakulādau paridṛśyamāne",
  "SA15n2859:155": "taddeśabheryādiravābhāvasiddhir nāvaśyaṃ śabdāntarapratītisāpekṣeti darśitam |",
  "SA15n2859:156": "na tayoḥ sahapratītiniyama iti cet ,",
  "SA15n2859:157": "bhūbhāgakumbhayor api naivam |",
  "SA15n2859:158": "ubhayos tu sator",
  "SA15n2859:159": "ekarūpapratītiniyamavirahaḥ pratyakṣasya tatrāpi samānaḥ |",
  "SA15n2859:166": "ekajñānam anyagrahāvinābhūtaṃ",
  "SA15n2859:167": "vā'nyagrāhijñānāntarāvinābhūtaṃ veti na viśeṣaḥ ,",
  "SA15n2859:168": "evam ekendriyajam anyad vā |",
  "SA15n2859:169": "santamase'vavarake'pi dīpābhāvas tadākāravirahiṇo jñānāntarād antato vikalpād",
  "SA15n2859:170": "api , yadi",
  "SA15n2859:171": "parasamayasyānuvartanam |",
  "SA15n2859:172": "vastutas tu vastusann evāndhakāra ekajñānasaṃsargī",
  "SA15n2859:173": "pradīpasya sambhavatīti kim anyena ?",
  "SA15n2859:180": "nanu svabhāvaviśeṣe'pi pratyayāntarasannidhir",
  "SA15n2859:181": "upalabdhiyogyatā |",
  "SA15n2859:182": "sa ca bhinnendriyajñānanimittaṃ bhavann api",
  "SA15n2859:183": "bhinnendriyajñānapratyayaniścaye'nupayuktaḥ |",
  "SA15n2859:184": "tataś cānyasya",
  "SA15n2859:185": "pratyayāntarasannidhisaṃśaye niṣedhaḥ kriyamāṇo'ntato vikalpād api niyatākārāt |",
  "SA15n2859:186": "kathaṃ dṛśyasya kṛtaḥ syāt ?",
  "SA15n2859:193": "ucyate :",
  "SA15n2859:194": "na khalu pratyayāntarasannidhisiddhinibandhanaṃ",
  "SA15n2859:195": "samānendriyajñānam eva ,",
  "SA15n2859:196": "kiṃ tu pañcaskandhalakṣaṇasyātmabhāvasyā- ( 3 )",
  "SA15n2859:206": "vasthāviśeṣasaṃvedanam api ,",
  "SA15n2859:207": "yadā nendriyasvabhāvaviśeṣābhyām aparaḥ",
  "SA15n2859:208": "prakāśako'pekṣyate ,",
  "SA15n2859:209": "yathā śabdapradīpadau |",
  "SA15n2859:216": "tatra hi kiñcit śrutadṛṣṭapūrviṇas",
  "SA15n2859:217": "tadavasthendriyapraṇidhividuṣo yataḥ kutaścit tattadākāravirahiṇo jñānāt",
  "SA15n2859:218": "tadabhāvasiddhiḥ kena vāryate ?",
  "SA15n2859:219": "kas tarhi jñānāntaraparigrahasyopayogaḥ ,",
  "SA15n2859:220": "taddaśāsaṃvido jñānānutpādād eva",
  "SA15n2859:221": "tadabhāvasiddheḥ ?",
  "SA15n2859:222": "kathaṃ vā bhinnaviṣayendriyajñānād",
  "SA15n2859:223": "anyaniṣedha iti ?",
  "SA15n2859:230": "uktam atra :",
  "SA15n2859:231": "nābhāvasya kvacit sāmarthyam ityādi | tato na",
  "SA15n2859:232": "jñānāntaram indriyasādguṇyaniścayāya samāśrīyate ,",
  "SA15n2859:233": "kiṃ tu pratiyogivirahavikalpajananāya | tatra",
  "SA15n2859:234": "yathā samānendriyasaṃsargijñānam anyābhāvaniścayasamartham ,",
  "SA15n2859:235": "tathā'nyad api sati",
  "SA15n2859:236": "sattve'vyabhicaritavyārthāntarajñānākāravirahīti na kaścid viśeṣaḥ |",
  "SA15n2859:243": "katham iti cet ,",
  "SA15n2859:244": "nātrecchānicchayoḥ sāmarthyam | yasya tu",
  "SA15n2859:245": "yadanvayavyatirekānukāraḥ , tayor",
  "SA15n2859:246": "hetuphalabhāvābhyupagamaḥ |",
  "SA15n2859:247": "yathā bhūtalaikākāraniyamāt tajjñānam anyaniṣedhavikalpenānukṛtānvayavyatirekam ,",
  "SA15n2859:248": "tathā pradīpam ānane kṣipataḥ",
  "SA15n2859:249": "sparśākāramātraniyamād rasābhāvajñānena tajjñānam |",
  "SA15n2859:250": "na hy anayor utpattau",
  "SA15n2859:251": "vyavadhānāvyavadhānavibhāgaḥ ,",
  "SA15n2859:252": "tathā'nupādhike payasi praṇihitaghrāṇasyāsparśanadarśanasyāpi",
  "SA15n2859:253": "vikalpa eva gandhāntaram ananubhavato'pi gandhābhāvajñānena tadākāraśūnyaḥ | ( 4 )",
  "SA15n2859:266": "laiṅgikaṃ tad iti cet ,",
  "SA15n2859:267": "na ,",
  "SA15n2859:268": "vyavadhānābhāvād abhyāsadaśāvataḥ |",
  "SA15n2859:269": "yatpratipattāv eva hi yanniścayaḥ ,",
  "SA15n2859:270": "na sa laiṅgikaḥ ,",
  "SA15n2859:271": "pratyakṣasiddho vā ,",
  "SA15n2859:272": "yathā nīlaṃ na pītam iti |",
  "SA15n2859:273": "asti ca sannihite",
  "SA15n2859:274": "payasi ghrāṇapranidhānamātrākāravikalpavato nāsti gandha iti niścayaḥ | tatra",
  "SA15n2859:275": "gandhajñānābhāvamātrasyāsādhanatve yadi niyatākāravikalpānubhavo na hetuḥ ,",
  "SA15n2859:276": "pītābhāvajñānasyāpi mā bhūn nīlānubhavaḥ |",
  "SA15n2859:283": "atra vā pratyakṣapauruṣam āmanato duṣpariharaṃ",
  "SA15n2859:284": "paratrāpi | tad eva ca pratyakṣam ekasya niṣedhyāpekṣayā'nupalabdhir ucyate ,",
  "SA15n2859:285": "yathā tathoktam |",
  "SA15n2859:286": "tac ca mūḍhaṃ pratipattāram",
  "SA15n2859:287": "adhikṛtya pūrvasamayānusāreṇa dharmiviśeṣe'bhāvaṃ niścāyayal liṅgam | amūḍhasya",
  "SA15n2859:288": "punar abhyāsābhāvavato'nantarasaṃśayavinākṛtaḥ sthira evāsau niścaya iti",
  "SA15n2859:289": "pratyakṣapravartita ucyate |",
  "SA15n2859:296": "nanu na pratyakṣakṛtaḥ kaścid abhāvavyavahāraḥ |",
  "SA15n2859:297": "nāpi pratyakṣam arthābhāvaniścayena phalavad uktam ,",
  "SA15n2859:298": "kiṃ tu jñānābhāvaniścayenaiva |",
  "SA15n2859:299": "taddvāreṇaiva",
  "SA15n2859:300": "tv arthābhāvaniścayam antarbhāvayatīti pratyakṣakṛtaḥ sa ucyate | sa ca",
  "SA15n2859:301": "tatsāmarthayajanmā'py anantaraṃ saṃśayena bhavatā paribhūyamāno mūḍhaṃ prati",
  "SA15n2859:302": "laiṅgikaḥ | na hi jñānasyeva prakāśarūpaniyamo'rthasyety adṛṣṭasyāpi sthiter",
  "SA15n2859:303": "avirodhāt , dṛṣyānupalabdhiḥ śaraṇam |",
  "SA15n2859:304": "amūḍhasya tu vyāpakānupalabdhiḥ ,",
  "SA15n2859:305": "dṛśyasattāyā darśanaviṣayatvena vyāpteḥ |",
  "SA15n2859:306": "etadvivecanāsāmarthyāt",
  "SA15n2859:307": "tu prācyo mūḍha ity eke | ( 5 )",
  "SA15n2859:320": "tad ayuktam |",
  "SA15n2859:321": "yathā hi jñānam aprakāśam",
  "SA15n2859:322": "anavasthāyi ,",
  "SA15n2859:323": "tathā'dṛśyam bahir apīti",
  "SA15n2859:324": "tadvad eva pratyakṣeṇānivāryavirahavyavahāram |",
  "SA15n2859:328": "kevalaṃ jātyaiva jñānaṃ dṛśyam ,",
  "SA15n2859:329": "bahis tu kiñcit kathañcit kadācit |",
  "SA15n2859:330": "tatrābhyāsaviśeṣavataḥ pratipattur jñānāntarasāmānya iva bāhyaviśeṣe'pi pratyakṣamātrād",
  "SA15n2859:331": "eva jhag iti niṣedhasiddhir asakṛd anubhūyamānā katham apahnotuṃ śakyā ?",
  "SA15n2859:335": "tattvota'numānasambhavād iti cet ,",
  "SA15n2859:336": "abhimatayogyatāniścayo'pi na pratyakṣakṛtaḥ",
  "SA15n2859:337": "syād iti yat kiñcid etat |",
  "SA15n2859:344": "na ca yathoktaḥ saṃśayo bahiradhikāreṇaiva | tad",
  "SA15n2859:345": "ayam asaṃsṛṣṭavikalpo vā pratyakṣo darśanātmā ,",
  "SA15n2859:346": "dṛśyātmano vā vikalpasya darśane'dṛṣṭir",
  "SA15n2859:347": "vikalpakalpanām indriyajñāne pratihanti ityāder avācyatāprasaṅgāt | tasmāj",
  "SA15n2859:348": "jñāne'pi kadācid anyajñānasya vimarśaḥ |",
  "SA15n2859:349": "arthe'py anullikhitāntarāsaṃśayo",
  "SA15n2859:350": "niścaya iti daśāvibhāgena pratyakṣasyetarasya vā sāmarthyasthitiḥ ,",
  "SA15n2859:351": "na tu jātivibhāgena |",
  "SA15n2859:358": "nanv ekopalambhānubhavād ityādinā jñānāntaraniṣedha",
  "SA15n2859:359": "eva sāmarthyam uktam |",
  "SA15n2859:360": "anubhavaś caivam eveti cet , na , yathā hi ( 6 )",
  "SA15n2859:373": "idaṃ nopalabha iti pratyakṣād anubhūyate ,",
  "SA15n2859:374": "tathedaṃ nāstīty api jhag ity evābhyāsavataḥ |",
  "SA15n2859:375": "anabhyādavatas tu jñānābhāva eva niścayaḥ |",
  "SA15n2859:376": "tadvāreṇa tv arthābhāva iti tadapekṣayā",
  "SA15n2859:377": "śāstre tathābhidhānam |",
  "SA15n2859:378": "evam ekajñānanasaṃsargiyatnādayo'pi vācyāḥ |",
  "SA15n2859:385": "ata eva vyavasyantīkṣaṇād eva sarvākārān",
  "SA15n2859:386": "mahādhiya ity uktam |",
  "SA15n2859:387": "mṛduprajñādhikāreṇa ca sthānasthāneṣu yatnaḥ |",
  "SA15n2859:388": "tasmāt paṭudhiyaḥ",
  "SA15n2859:389": "pratyakṣād eva maṇirūpyādivivekavat tanniṣedhavyavahāro'pi durnivāraḥ |",
  "SA15n2859:396": "na cābhāvo nāma vigrahavān ,",
  "SA15n2859:397": "yenānyavyatirekiṇā rūpeṇa sākṣātkartavyaḥ ,",
  "SA15n2859:398": "kiṃ tu vyavahartavyaḥ |",
  "SA15n2859:399": "sa caikākāraniyamāt paṭunā",
  "SA15n2859:400": "vyavahartum adhyakṣeṇa śakya eva |",
  "SA15n2859:407": "yaḥ punar apaṭur āpātataḥ pravṛtte'py",
  "SA15n2859:408": "abhāvaniścaye saṃśete ,",
  "SA15n2859:409": "sa dṛśyasya",
  "SA15n2859:410": "anupalambhamātram anusṛtya tadvyavahāraṃ pravartayati |",
  "SA15n2859:417": "yas tu tato'py apaṭuḥ sa dṛśyasyānupalambhe'pi",
  "SA15n2859:418": "sandihāno vyāpakānupalambhena pravartate |",
  "SA15n2859:419": "na punar avyāmuḍhasyānena parvṛttiḥ ,",
  "SA15n2859:420": "pratyakṣāpāṭava eva hy anumānaṃ prārthyate |",
  "SA15n2859:421": "tatpāṭavaṃ ca vikalpajananenāvasthāpyate ,",
  "SA15n2859:422": "paṭutaratvaṃ ca ,",
  "SA15n2859:423": "tatra vimarśābhāvāt | ( 7 )",
  "SA15n2859:436": "cārvākaṃ tu pṛthagabhāvam anumanyamānam eva",
  "SA15n2859:437": "prati pratyakṣasya niṣedha'vyāpāro darśitaḥ ,",
  "SA15n2859:438": "arthasāmarthyāpekṣādyukteḥ |",
  "SA15n2859:439": "na cānumānasyeva",
  "SA15n2859:440": "pratyakṣasyāpi niścayavaśād grahaṇavyavasthā ,",
  "SA15n2859:441": "kiṃ tu pratibhāsavaśāt |",
  "SA15n2859:442": "niyatākārataiva ca",
  "SA15n2859:443": "tasya tadanyābhavabhāsanam |",
  "SA15n2859:444": "tasmād duṣpariharaḥ pratyakṣasyābhāvavyavahāraśaktisambhavaḥ |",
  "SA15n2859:451": "pratiṣedhas tu sarvatrānupalambhād iti tu na",
  "SA15n2859:452": "pratyakṣapratikṣepaḥ ,",
  "SA15n2859:453": "kiṃ tu liṅgāntarasya ,",
  "SA15n2859:454": "dvāv eva vidhisādhanāv iti yathā |",
  "SA15n2859:461": "tad ayam ambhasi gandhaniṣedhaḥ pratyakṣakṛta",
  "SA15n2859:462": "evāvyavadher na laiṅgikaḥ |",
  "SA15n2859:469": "kiṃ cātra liṅgaṃ gandhābhāvāvyabhicāri ?",
  "SA15n2859:470": "jñānakāryānupalabdhir iti cet ,",
  "SA15n2859:471": "yadā svagrāhijñānaṃ kāryahetuḥ ,",
  "SA15n2859:472": "tadedaṃ yuktam api |",
  "SA15n2859:473": "yadā tu pratyakṣam eva tat ,",
  "SA15n2859:474": "tadā pratyakṣayogyasya tannivṛttiḥ |",
  "SA15n2859:475": "yadi na , dṛśyānupalabdhir ghaṭasyāpi mā bhūt |",
  "SA15n2859:482": "tad idaṃ",
  "SA15n2859:483": "pratiyogijñānarūpatālocanavañcanāphalam eva |",
  "SA15n2859:484": "ayaṃ ca vādī yadīndriyasādguṇyam",
  "SA15n2859:485": "aniścinvann etad āha ,",
  "SA15n2859:486": "tadā sann api gandhādir",
  "SA15n2859:487": "nopalabhyata ity āyātam |",
  "SA15n2859:494": "atha niścinvann alaṃ kāryānupalabdhyeti draṣṭavyam |",
  "SA15n2859:495": "parokṣasambhāvite ca kāraṇādau kāryādyanupalabdhiṃ yatnena yojayati | samprati",
  "SA15n2859:496": "ca ( 8 )",
  "SA15n2859:509": "doṣaleśabhayāt pratyakṣasambhāvite'pi saṃśeta",
  "SA15n2859:510": "ity asambhaddham |",
  "SA15n2859:511": "tasmāt sthitam etat :",
  "SA15n2859:512": "yasmin vedyamāne yad avaśyaṃ vedyata eva ,",
  "SA15n2859:513": "tasyābhinnendriyagrāhyasyānyasya",
  "SA15n2859:514": "vā'nindriyagrāhyasya vā buddhir anupalabdhiḥ |",
  "SA15n2859:515": "sā ca vyavahāram eva sādhayati ,",
  "SA15n2859:516": "anyathā pratyakṣasiddheḥ |",
  "SA15n2859:517": "tadarthaṃ ca",
  "SA15n2859:518": "virahajñānasya sthiteḥ sthairyasya āśraya ity uktam ,",
  "SA15n2859:519": "na tu virahaniścayasyeti |",
  "SA15n2859:526": "yathā ca niyatasahopalambhayor ekajñānam anyaniṣedhāya ,",
  "SA15n2859:527": "tathā niyatāsahopalambhayor apīty āha na vā",
  "SA15n2859:528": "iti | vedye yatra hi yanmatir niyamato na syād ity arthaḥ ,",
  "SA15n2859:529": "yathā nīlam idam anīlaṃ na bhavatīti |",
  "SA15n2859:536": "atrāpi vyavahāra eva sādhyaḥ | etena",
  "SA15n2859:537": "parasparaparihārasthitilakṣaṇo virodho vyākhyātaḥ |",
  "SA15n2859:544": "nanu yasmin vedyamāne yanmatir niyamena bhavituṃ",
  "SA15n2859:545": "sambhāvyata ity anenaiva gatam etat |",
  "SA15n2859:546": "aḍṛśyo'pi hi tādātmyena niṣedhyamāno dṛśyatayā",
  "SA15n2859:547": "sambhāvita eva niṣidhyate |",
  "SA15n2859:548": "anyathā dṛśyādṛśyatayā svayam eva bhedābhyupagamād",
  "SA15n2859:549": "iti kim anena pṛthagvacaneneti cet ,",
  "SA15n2859:550": "evaṃ tarhi na vā syād ity ayam abhāvaḥ pradhvaṃsalakṣaṇo",
  "SA15n2859:551": "vyākhyāyate |",
  "SA15n2859:552": "pravṛtta'pi yanmatir yatra vedye sati niyamena nivartata ity arthaḥ |",
  "SA15n2859:556": "niyamaś ca sattabādhane'bhāva eva yuktaḥ ,",
  "SA15n2859:557": "yathā neha śītam agner iti | etena",
  "SA15n2859:558": "sahānavasthānalakṣaṇo virodho vyākhyātaḥ | ( 9 )",
  "SA15n2859:571": "nanv andhakāre niyamenānupalambha iti nāvaśyam",
  "SA15n2859:572": "viruddhaparigraha iti cet ,",
  "SA15n2859:573": "naikapratipattrapekṣaṃ",
  "SA15n2859:574": "lakṣaṇam etat ,",
  "SA15n2859:575": "kiṃ tu sāmānyena | asti ca",
  "SA15n2859:576": "nirālokasyāpi rūpasya darśanaṃ kaiścit |",
  "SA15n2859:577": "tenāpi vā sambhāvyam añjanaviśeṣādineti",
  "SA15n2859:578": "sattocchede tu niyama evety adoṣaḥ |",
  "SA15n2859:585": "nanv atrāpi śītaṃ yadi syāt ,",
  "SA15n2859:586": "nāgner ekarūpaniyatā pratipattir iti kathaṃ",
  "SA15n2859:587": "pūrvato viśeṣaḥ ?",
  "SA15n2859:588": "naivam , sparśanāgamye niṣedhasyābhimatatvāt | tarhi",
  "SA15n2859:589": "pravṛttā'pi śītasya buddhir agnau vedye sati niyamān nivṛttā iti pratyetum",
  "SA15n2859:590": "aśakyam | na , anyadaitatpratīter vivakṣitatvāt |",
  "SA15n2859:597": "tarhi prāggṛhītavirodhasmaraṇavyavahitavyāpāratvān",
  "SA15n2859:598": "na pratyakṣasya pravṛttito'bhāvaniścayaḥ syāt |",
  "SA15n2859:605": "mā bhūt ! kevalaṃ vyavadhāne'pi tathāviruddhabuddhir",
  "SA15n2859:606": "evābhāvaniścayāṅgaṃ nānyamātrasyety anupalabdhivyavasthānibandhanasya na kṣatiḥ |",
  "SA15n2859:613": "na ca vyavahāramātrasādhanam atrāpi saṃmatam",
  "SA15n2859:614": "ity āha sāpekṣā tu parā smṛtāv ata ihābhāvo'pi sādhyaḥ |",
  "SA15n2859:615": "tatsiddhau ca",
  "SA15n2859:616": "tanniścayasthitilakṣaṇo vyavahāro'pi na punas tanmātram ity arthaḥ | tathā",
  "SA15n2859:617": "hetuvyāpakanihnave'bhāvo'pi sādhya iti vartate |",
  "SA15n2859:618": "yathā neha dhūmo'gner abhāvāt |",
  "SA15n2859:619": "neha śiṃśapā vṛkṣābhāvāt |",
  "SA15n2859:620": "na hy atrāgnivṛkṣayoḥ pratiyogipra ( 10 )",
  "SA15n2859:633": "tyakṣamātraṃ pūrvapravṛttatādātmyatadutpattisambandhabodhasmaraṇanirapekṣaṃ",
  "SA15n2859:634": "dhūmāśiṃśapayor abhāvaniścayaṃ prasavati | tato'trāpy",
  "SA15n2859:635": "abhāvasādhanavyavahārasiddhiḥ |",
  "SA15n2859:642": "te etarhi niṣedhahetavaḥ svabhāvānupalabdhiḥ",
  "SA15n2859:643": "kāraṇānupalabdhir vyāpakānupalabdhiś ceti |",
  "SA15n2859:644": "tathā vidhisādhanau dvāv iti pañcahetavaḥ",
  "SA15n2859:645": "prasaktāḥ | na ,",
  "SA15n2859:646": "anupalabdhisāmānyāśrayād",
  "SA15n2859:647": "ekatvāt | api ca anupalabdhiḥ svasyāparasyāparā |",
  "SA15n2859:648": "kāraṇavyāpakayoḥ",
  "SA15n2859:649": "svabhāvānupalabdhir evāparasya kāryasya vyāpyasya vā'parā kāraṇānupalabdhir",
  "SA15n2859:650": "vyāpakānupalabdhiś cocyote |",
  "SA15n2859:657": "yathā hy anyapratyakṣam evānyasyānupalabdhiḥ ,",
  "SA15n2859:658": "tathā kasyacit svabhāvānupalabdhir eva",
  "SA15n2859:659": "kāryavyāpyāpekṣayā kāraṇavyāpakānupalabdhir ucyata iti na vyapadeśabhedād",
  "SA15n2859:660": "vastubhedaḥ |",
  "SA15n2859:661": "tasmāt svabhāvānupalabdher eva niṣedhaḥ sarvasyeti trayam eva liṅgam |",
  "SA15n2859:668": "etena kāryasya svabhāvānupalabdhir eva",
  "SA15n2859:669": "samarthakāraṇasya kāryānupalabdhir upalakṣitā draṣṭavyā |",
  "SA15n2859:670": "hetuśabdasya vā liṅgārthasya",
  "SA15n2859:671": "vyākhyānāt , yathā",
  "SA15n2859:672": "nehāpratibaddhasāmarthayāni dhūmakāraṇāni santi dhūmābhāvād iti | ( 11 )",
  "SA15n2859:685": "kathaṃ tarhi nātra tuṣārasparśo'gner iti",
  "SA15n2859:686": "vyāpakaviruddhopalabdhisaṅgrahaḥ ?",
  "SA15n2859:687": "atrāpy anupalabdhiḥ svasyāparasyāparā |",
  "SA15n2859:688": "vyāpakasya hi śītasya viruddhadahanopalabdhirūpā yā svabhāvānupalabdhiḥ ,",
  "SA15n2859:689": "sā vyāpyasya tuṣārasparśasya",
  "SA15n2859:690": "vyāpakaviruddhopalabdhir ucyata iti na doṣaḥ |",
  "SA15n2859:691": "yady api ca vyāpakānupalabdhir",
  "SA15n2859:692": "api sā vaktuṃ śakyā , tathā'pi",
  "SA15n2859:693": "viruddhapratiyogipratītirūpatāpratipādanārthaṃ tathāvyapadeśaḥ |",
  "SA15n2859:694": "evaṃ kāraṇaviruddhopalabdhyādayo",
  "SA15n2859:695": "vyākhyeyāḥ |",
  "SA15n2859:696": "sarvatrābhāva eva sādhyo'dhyakṣeṇāsiddheḥ ,",
  "SA15n2859:697": "taddvārakas tu vyavahāra iti |",
  "SA15n2859:704": "nanu viruddhopalabdhyādau katham",
  "SA15n2859:705": "anupalabdhivyavahāraḥ ? uktam atra",
  "SA15n2859:706": "pratiyogyupalabdhir evānupalabdhiḥ |",
  "SA15n2859:707": "pratiyogī ca dvividha eva | tatra yadā",
  "SA15n2859:708": "viruddhaḥ pratiyogī ,",
  "SA15n2859:709": "tadā viruddhaśabdaprayoga",
  "SA15n2859:710": "upalabdhiśabdam evam prayojyam upapādayati |",
  "SA15n2859:711": "śeṣe tu pratiyogini gamyamāne",
  "SA15n2859:712": "svabhāvaśabdo dṛśyaśabdo vā prayujyamānaḥ pratiṣedhyāpekṣayā'nupalabdhiśabdena",
  "SA15n2859:713": "vyapadeśayati |",
  "SA15n2859:714": "tad ekatropalabdhitvaṃ gamyam anyatrānupalabdhitvam | tattvaṃ tv",
  "SA15n2859:715": "ekam eveti na doṣaḥ |",
  "SA15n2859:719": "yadā ca viruddhaḥ pratiyogī dvitīyasya ca parokṣasyaiva",
  "SA15n2859:720": "niṣedhaḥ , tadā tasyāpi nāvaśyaṃ",
  "SA15n2859:721": "pratyakṣam evānupalabdhiḥ ,",
  "SA15n2859:722": "kim tv anumānam api | ( 12 )",
  "SA15n2859:735": "viruddho hi svasattayā parasattām apanayan",
  "SA15n2859:736": "pratiyogī mataḥ |",
  "SA15n2859:737": "na ca parokṣo'pi tathābhavan kena vāryate ?",
  "SA15n2859:738": "niyatasahopalambhe tu pratiyogini pratyakṣayogyasyaiva",
  "SA15n2859:739": "niṣedha iti tasyāvaśyaṃ pratyakṣāpekṣā |",
  "SA15n2859:740": "na hy anumīyamāne pradeśe ghaṭo yadi",
  "SA15n2859:741": "bhaved upalabhyetaiveti sāmarthyaṃ pratyakṣāyogād anumānasya",
  "SA15n2859:742": "cārambhaniyamābhāvād iti kathaṃ niṣedhaḥ ?",
  "SA15n2859:749": "yady evam ,",
  "SA15n2859:750": "vikalpamātrād apratiṣedha iti cet ,",
  "SA15n2859:751": "na ,",
  "SA15n2859:752": "tatrāpi vikalpākāre vedyamāne bahir apy",
  "SA15n2859:753": "abhimatadeśam indriyasāmarthayānapāye'nubhūyeta ity ucyate |",
  "SA15n2859:754": "na tu vikalpanīye",
  "SA15n2859:755": "bāhye vikalpyamāne dvitīyam api vedyeta iti śakyam |",
  "SA15n2859:762": "vikalpanīya'pi bāhye vikalpyamāne taddeśam",
  "SA15n2859:763": "aparam upalabhyetaiva iti kiṃ na syāt ?",
  "SA15n2859:764": "na hi pratiyogijñānam anyasya dṛśyatāropanibandhanam ,",
  "SA15n2859:765": "api tv abhāvaniścayotpādanimittam ,",
  "SA15n2859:766": "sattvavastutvāt |",
  "SA15n2859:767": "tac ca vikalpasyāpīti ko viśeṣaḥ ?",
  "SA15n2859:774": "atha pratipattranurodhaḥ ,",
  "SA15n2859:775": "ekajñānasaṃsargiṇo'py anurodhaḥ sādhur iti |",
  "SA15n2859:776": "naivam , jale gandhasyānale",
  "SA15n2859:777": "rasasyāpi śeṣamātropalabdhau vā'bhāvavyavahāramātradarśanāt | tatra vā",
  "SA15n2859:778": "jñānākāryānupalambhavāde'nyatrāpi sa eveti kim ekajñānasaṃsargiṇā ?",
  "SA15n2859:785": "kāryānupalabdhyā samarthasyaiva niṣedha iti cet ,",
  "SA15n2859:786": "gandhādis tarhi sann api nīrādāv indriyavaiguṇyān",
  "SA15n2859:787": "nopalambhya iti mahad eva śāstrapariśramaphalam |",
  "SA15n2859:788": "sa hi vaiguṇyasya kāraṇānupalambhe'pi",
  "SA15n2859:789": "yogyādibhir abhibhavaṃ sambhāvayan saṃśete |",
  "SA15n2859:790": "bhūtale tu tatkṛtābhūtadarśanam",
  "SA15n2859:791": "indriyapāṭave'pi sambhāvayan kiṃ na saṃśete ?",
  "SA15n2859:792": "tasmād abhyāsadaśāyāṃ tādavasthyasthityaiva",
  "SA15n2859:793": "vyavahāraḥ | ( 13 )",
  "SA15n2859:806": "nyāyanāthasya tu na vyavahāram anuvṛttya",
  "SA15n2859:807": "paryanuyogo visargo vā ,",
  "SA15n2859:808": "kiṃ tv etāvatyām api",
  "SA15n2859:809": "gatau nāsmallakṣaṇakṣatir iti darśayituṃ prauḍhivaśāt ,",
  "SA15n2859:810": "yathā sarvacittāsarvabodhaniścaye'pi sa eva",
  "SA15n2859:811": "sarvajña iti |",
  "SA15n2859:812": "vyavahāre ca yathaikajñānasaṃsargiṇaṃ paśyatas tathā'nyam api",
  "SA15n2859:813": "pratiyoginam abhāvaniścayo dṛṣṭaḥ sādhāraṇo'visaṃvādī ceti naikajñānasaṃsargigrahaḥ |",
  "SA15n2859:814": "vikalpaśaraṇāvasthāyāṃ ca tadākārasaṃvedanam evānyaniṣedhasādhanaṃ yuktam ,",
  "SA15n2859:815": "tathaivābhyāsena pratyakṣasāmarthyadarśanāt |",
  "SA15n2859:822": "tad evaṃ viruddhasya parokṣasyāpy upalabdhir",
  "SA15n2859:823": "anumānātmikā'bhāvam itarasya sādhayati ,",
  "SA15n2859:824": "yathā neha śītaṃ dhūmād ity evaṃ",
  "SA15n2859:825": "vyāpakaviruddhakāryopalabdhir draṣṭavyā ,",
  "SA15n2859:826": "yathā neha tuṣāraṃ dhūmāt |",
  "SA15n2859:827": "etac ca saṅkalayya",
  "SA15n2859:828": "prayogakāle vyākhyānam |",
  "SA15n2859:829": "vastutas tu na śītam agner ity ekaḥ prayogaḥ",
  "SA15n2859:830": "tadasiddhiparihārāya tv asti cāgnir atra dhūmād ity aparaḥ |",
  "SA15n2859:831": "tathā na tuṣāram",
  "SA15n2859:832": "agneḥ | vyāpakasya hi viruddho viruddha eva ,",
  "SA15n2859:833": "agniś ca dhūmād iti |",
  "SA15n2859:834": "śeṣam apy evam ūhyam |",
  "SA15n2859:841": "yadi kāraṇādeḥ svabhāvānupalabdhir anyasya kāraṇādyanupalabdhiḥ",
  "SA15n2859:842": "paryudāsarūpā ,",
  "SA15n2859:843": "kathaṃ tarhi nirupākhyeṣu ,",
  "SA15n2859:844": "yathā na vaktā bandhyāsutaś caitanyābhāvād",
  "SA15n2859:845": "iti | tatrāpi buddhipratibhāsasyaiva caitanyaviyuktatvena saṃvedanaṃ",
  "SA15n2859:846": "vyāpakānupalabdhiparyudāsaḥ |",
  "SA15n2859:847": "vaktṛtvavyavacchedena ca saṃvedanaṃ vyāpyābhāvaḥ | ( 14 )",
  "SA15n2859:860": "svabhāvahetuparyavasitāś ca sarvānupalabdhayo",
  "SA15n2859:861": "niṣedhasādhanādhyavasāyāc ca bhedena nirdeśa iti na doṣaḥ |",
  "SA15n2859:868": "tathā'py uktena krameṇa sākṣād eva",
  "SA15n2859:869": "svabhāvanupalabdhir niṣedha iti katham ācāryapādaiḥ paramparayā'bhidhānād",
  "SA15n2859:870": "aupacārikaḥ kṛta iti cet ,",
  "SA15n2859:871": "niṣedhyasyaiva yadi dṛśyānupalabdhir",
  "SA15n2859:872": "niṣeddhrā vivakṣitā tadaupacārikaḥ |",
  "SA15n2859:873": "yadi tu parasyāpi ,",
  "SA15n2859:874": "tadā mukhya iti ko virodha iti | kevalam",
  "SA15n2859:875": "aupacārikakathane kiṃ prayojanam iti syāt |",
  "SA15n2859:876": "tatrāpi dṛśyasyaiva niṣedho yathā",
  "SA15n2859:877": "śakyaḥ syāt , nānyasya",
  "SA15n2859:878": "sarvajñavītarāgādeḥ pradhānapuruṣārthasyeti kāryatas tatrāntarbhāvaḥ |",
  "SA15n2859:885": "tattvatas tu tasya tadanyasya vā",
  "SA15n2859:886": "yathoktasyānupalabdhiḥ sādhiketi anupalabdhirahasyaṃ samāptam |",
  "SA15n2859:892": "( 15 )"
}