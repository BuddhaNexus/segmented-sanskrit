{
  "SA01n793:0": "ācārya nāgārjunapādaviracitam",
  "SA01n793:1": "āryadharmadhātugarbhavivaraṇam",
  "SA01n793:2": "bhāratīyabhāṣāyām-āryadharmadhātugarbhavivaraṇam |",
  "SA01n793:3": "bhoṭabhāṣāyām-phag-pā-chos-kyi-yiṅ-kyi-ñiṅ-poī-nama-para-ḍela-pā |",
  "SA01n793:4": "namo ratnatrayāya",
  "SA01n793:5": "ye dharmā hetuprabhavā hetuṃ teṣāṃ tathāgato hyavadat |",
  "SA01n793:6": "teṣāṃ ca yo nirodha evaṃvādī mahāśramaṇaḥ ||",
  "SA01n793:7": "ityuktam |",
  "SA01n793:8": "atra 'ye dharmā' iti saptabhiḥ prakārairavagantavyāḥ |",
  "SA01n793:9": "tadyathā-vijñānaṃ nāmarūpaṃ ṣaḍāyatanaṃ sparśaḥ vedanā jātirjarāmaraṇamiti |",
  "SA01n793:10": "ime dharmāḥ api pañcabhyaḥ prakārebhya utpadyanta iti 'hetuprabhavāḥ' ityuktam |",
  "SA01n793:11": "ke te pañca hetavaḥ ?",
  "SA01n793:12": "avidyā tṛṣṇā upādānaṃ saṃskārā bhavaśceti |",
  "SA01n793:13": "saptavidhānāṃ dharmāṇāṃ pañcaprakārāṇāṃ ca teṣāṃ hetūnāṃ nirodhastāvad 'hetuṃ teṣāṃ ca yo nirodhaḥ' ityādinā'bhihitaḥ |",
  "SA01n793:14": "sa evopaśamaḥ mokṣo nirvāṇa-miti |",
  "SA01n793:15": "sa ca kenoktaḥ ?",
  "SA01n793:16": "'tathāgato hyavadat |",
  "SA01n793:17": "iti |",
  "SA01n793:18": "tenopadiṣṭa ityabhiprāyeṇa tathā kathitam |",
  "SA01n793:19": "arthānāṃ yathā sthitistathā (yathāvat)",
  "SA01n793:20": "avabodhāt 'tathāgataḥ' ityucyate |",
  "SA01n793:21": "vastūnāṃ yathā sthitiḥ,",
  "SA01n793:22": "tasyā abhrāntatayā anyebhyo deśanād vā 'tathāgataḥ' |",
  "SA01n793:23": "evaṃvidho yo deśakaḥ,",
  "SA01n793:24": "yaścaivaṃ svayaṃ bodhakaḥ śravaṇaśīlayuktaśca sa 'evaṃvādī' (mahāśramaṇaḥ) ityuktaḥ |",
  "SA01n793:25": "'mahān'-śabdaḥ pradhāna-adbhuta-parama-pravaraparyāyaḥ |",
  "SA01n793:26": "yo vādī vidvān vīraḥ tapasvī mahotsāhaḥ tīvravīryaḥ adbhutakarmakāri ca bhavati,",
  "SA01n793:27": "sa eva 'mahān' iti |",
  "SA01n793:28": "(sa) aśeṣajñātavyānāṃ jñānād 'vidvān' |",
  "SA01n793:29": "aśeṣakleśānāṃ damane samarthatvād 'vīraḥ' |",
  "SA01n793:30": "śīlasya samyagbhāvanayā 'tapasvī' |",
  "SA01n793:31": "guṇādiṣvaparikhedād 'mahotsāhaḥ' |",
  "SA01n793:32": "yasya śiraḥ kapālaṃ vā agninā dīptam,",
  "SA01n793:33": "tadavān iva 'tīvravīryaḥ tathā adbhutadharmāṇāṃ sākṣātkāritvād 'adbhutakarmakārī' iti |",
  "SA01n793:34": "etādṛśa eva 'mahān' ityucyate |",
  "SA01n793:35": "śramaṇaḥ iti pāpānāṃ kleśānāṃ copaśamād 'śramaṇaḥ' |",
  "SA01n793:36": "sarvapāpānāṃ prakṣālanād 'brāhmaṇaḥ' |",
  "SA01n793:37": "kleśaklamathaparivarjanād 'śramaṇaḥ' svakīyamalāpasāraṇāt 'pravrajitaḥ' iti |",
  "SA01n793:38": "ityevaṃvidhairguṇaiḥ samanvāgata iti |",
  "SA01n793:39": "bhagavatā buddhenokta ityanena yogaḥ karaṇīyaḥ |",
  "SA01n793:40": "evameva duḥkha-samudaya-nirodha-mārgasatyeṣvapi yogaḥ karaṇīyaḥ |",
  "SA01n793:41": "avidyāhetoḥ saṃskārāḥ,",
  "SA01n793:42": "ityārabhya jarā-maraṇaparyantaṃ (svabhāvataḥ siddhaṃ)",
  "SA01n793:43": "kartāramanapekṣya samutpādastāvad 'anulomaḥ' |",
  "SA01n793:44": "avidyādihetūnāṃ nivṛtteravabodhaḥ 'pratilomaḥ' ityuktaḥ |",
  "SA01n793:45": "avidyānivṛtteḥ saṃskārādayo nivartanta ityupadeśakārakatvāt (bhagavān buddha eva)",
  "SA01n793:46": "'mahāśramaṇaḥ' iti |",
  "SA01n793:47": " ||ācāryanāgārjunapādaviracitaṃ 'āryadharmadhātugarbhavivaraṇam' samāptam ||",
  "SA01n793:48": "bhāratīyopādhyāyena jñānagarbheṇa 'mahālocāvā vande palacekmahābhāgena cānūdya saṃśodhya ca sunirṇītam |",
  "SA01n793:49": " ||bhavatu sarvamaṅgalam ||"
}