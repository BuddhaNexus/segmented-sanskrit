{
  "SA08n988:0": "(29) mārgavargaḥ",
  "SA08n988:1": "āryacatuṣṭayopāsakaḥ pāraṃ gacchati",
  "SA08n988:2": "satyāni catvāri śivāni tāni,",
  "SA08n988:3": "subhāvitānyeva samīkṣya vidvān |",
  "SA08n988:4": "sucintako jāti-jarā-bhayebhyaḥ,",
  "SA08n988:5": "pramucyaye pāramupaiti śāntaḥ ||1 ||",
  "SA08n988:6": "kāmeṣu saktaḥ bhavabhogabaddhaḥ bhavati",
  "SA08n988:7": "acintako yastu vibhūtabuddhiḥ",
  "SA08n988:8": "kāmeṣu sakto bhavabhogabaddhaḥ |",
  "SA08n988:9": "sa bandhanaiḥ kāmamayairnibaddho,",
  "SA08n988:10": "na mucyate jāti-jarā-bhayebhyaḥ ||2 ||",
  "SA08n988:11": "bhavārṇave sukhadraṣṭā ante narakaṃ yāti",
  "SA08n988:12": "vicintya yo duḥkhamidaṃ viśālaṃ,",
  "SA08n988:13": "na khedamāyāti bhavārṇavebhyaḥ |",
  "SA08n988:14": "sa kāmavāṇairnihato hi mūḍhaḥ,",
  "SA08n988:15": "kaṣṭāmavasthāṃ narake'pi yāti ||3 ||",
  "SA08n988:16": "ābhyantaraṃ kṣemasukhaṃ ca hitvā,",
  "SA08n988:17": "kiṃ kāmabhogābhiratā hi bālāḥ |",
  "SA08n988:18": "naite bijānanti bhayaṃ ca tīvra-",
  "SA08n988:19": "mabhyeti mṛtyurjvalanaprakāśaḥ ||4 ||",
  "SA08n988:20": "tattvamārgapradarśakaiḥ kimuktam?",
  "SA08n988:21": "anityaduḥkhaśūnyo'yamātmā kārakavarjitaḥ |",
  "SA08n988:22": "saṃsāraḥ kathito buddhaiḥ tattvamārgapradarśakaiḥ ||5 ||",
  "SA08n988:23": "tena sarvamidaṃ tattvajñānaṃ jñeyaṃ samāsataḥ |",
  "SA08n988:24": "jñānajñeyavinirmuktaṃ tṛtīyaṃ nopalabhyate ||6 ||",
  "SA08n988:25": "kaḥ tattvavidhijñaḥ?",
  "SA08n988:26": "antapāravidhijño yaḥ ṣoḍaśākāratattvavit |",
  "SA08n988:27": "ūrdhvagatividhijño hi kṣāntitattvavicakṣaṇaḥ ||7 ||",
  "SA08n988:28": "tattvavideva dharmatāmanuviśati",
  "SA08n988:29": "agralokaikadharmajñaḥ samanantaratattvavit |",
  "SA08n988:30": "sa dharmatāmanuviśed yathā (ca)",
  "SA08n988:31": "na vikampate ||8 ||",
  "SA08n988:32": "dvayopāyavinirmukto naṣṭān nāśayate muhuḥ |",
  "SA08n988:33": "naṣṭapāpagatirvīraḥ strotāpanno nirucyate ||9 ||",
  "SA08n988:34": "srotāṃsya kuśalā dharmā jīryante pāpagāminaḥ |",
  "SA08n988:35": "mokṣāgninā pratapyante srotāpanno bhavatyataḥ ||10 ||",
  "SA08n988:36": "prasrabdhijaṃ mahodarkamuktaṃ saṃsāramokṣakam |",
  "SA08n988:37": "tṛṣṇākṣayasukhaṃ dṛṣṭaṃ satyataḥ sukhakārakam ||11 ||",
  "SA08n988:38": "kaḥ sadaiva sukhī bhavati?",
  "SA08n988:39": "nāvabadhnāti yaṃ tṛṣṇā na vitarkairvihasyate |",
  "SA08n988:40": "samprāptabhavapārastu sukhī bhavati sarvadā ||12 ||",
  "SA08n988:41": "ārya mārgacatuṣṭayam anyonyaphalasambhūtam",
  "SA08n988:42": "anyonyaphalasambhūta sarvataḥ sampravartate |",
  "SA08n988:43": "tadeva kāraṇaṃ jñeyamāryamārgacatuṣṭayam ||13 ||",
  "SA08n988:44": "āryasatyeṣu viditaḥ puruṣo vidyate dhruvam |",
  "SA08n988:45": "viṣayeṣu hi saṃghuṣṭaṃ jagad bhramati cakravat ||14 ||",
  "SA08n988:46": "kaḥ śreṣṭho mārgaḥ?",
  "SA08n988:47": "sa mārgo deśakaḥ śreṣṭho yo mārgo bhāṣitaḥ śivaḥ |",
  "SA08n988:48": "yena mārgeṇa prācīnā (dhruvaṃ)",
  "SA08n988:49": "yātā manīṣiṇaḥ ||15 ||",
  "SA08n988:50": "triśaraṇagata eva sukhaṃ jīvati",
  "SA08n988:51": "sujīvitaṃ bhavet tasya yasya buddhau sthitaṃ manaḥ |",
  "SA08n988:52": "nahi buddhivinirmuktaṃ jīvitaṃ jīvitaṃ bhavet ||16 ||",
  "SA08n988:53": "sujīvitaṃ bhavet tasya yasya dharme sthitaṃ manaḥ |",
  "SA08n988:54": "nahi dharmavinirmuktaṃ jīvitaṃ jīvitaṃ bhavet ||17 ||",
  "SA08n988:55": "sujīvitaṃ bhavet tasya yasya saṅghe sthitaṃ manaḥ |",
  "SA08n988:56": "nahi saṅghavinirmuktaṃ jīvitaṃ jīvitaṃ bhavet ||18 ||",
  "SA08n988:57": "keṣāṃ sujīvitaṃ jīvanam?",
  "SA08n988:58": "sujīvitaṃ bhavet tasya yasya satye sthitaṃ manaḥ |",
  "SA08n988:59": "nahi satyavinirmuktaṃ jīvitaṃ jīvitaṃ bhavet ||19 ||",
  "SA08n988:60": "sujīvitaṃ bhavet tasya yasya mārge sthitaṃ manaḥ |",
  "SA08n988:61": "nahi mārgavinirmuktaṃ jīvitaṃ jīvitaṃ bhavet ||20 ||",
  "SA08n988:62": "nirvāṇagamane yasya nityaṃ buddhiravasthitā |",
  "SA08n988:63": "sa doṣādeva nirmukto na devaḥ krīḍati svayam ||21 ||",
  "SA08n988:64": "kīdṛśī krīḍā sukhodbhāvikā?",
  "SA08n988:65": "yā bhavavyāpinī krīḍā nityamekāgracetasaḥ |",
  "SA08n988:66": "sā sukhodbhāvikā krīḍā na krīḍā rāgakārikā ||22 ||",
  "SA08n988:67": "kena mārgeṇa śivaṃ sthānaṃ milati?",
  "SA08n988:68": "sukhādīniha satyāni yathā dāntena vindati |",
  "SA08n988:69": "tadā kṣemaṃ śivaṃ sthānaṃ prāpnoti puruṣottamaḥ ||23 ||",
  "SA08n988:70": " ||iti mārgavarga ekonatriṃśaḥ ||"
}