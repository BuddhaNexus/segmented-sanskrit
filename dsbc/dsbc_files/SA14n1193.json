{
  "SA14n1193:0": "6. prajñāpāramitāsamāsaḥ",
  "SA14n1193:1": "puṇyāni dānaprabhṛtīnyamūni",
  "SA14n1193:2": "prajñāsanāthānyadhikaṃ vibhānti |",
  "SA14n1193:3": "hiraṇmayānīva vibhūṣaṇāni",
  "SA14n1193:4": "pratyuptaratnadyutibhāsvarāṇi || 1 ||",
  "SA14n1193:5": "kriyāsu sāmarthyaguṇaṃ hi teṣāṃ",
  "SA14n1193:6": "prajñaiva vistāriṇamādadhāti |",
  "SA14n1193:7": "svārthapravṛttau viśadakramāṇāṃ",
  "SA14n1193:8": "yathā manaḥsaṃtatirindriyāṇāṃ || 2 ||",
  "SA14n1193:9": "kriyāsvayogyāni śarīrayantrāṇyā-",
  "SA14n1193:10": "yurviyuktāni yathā na bhānti |",
  "SA14n1193:11": "tathaiva kāryāṇi na bhānti loke",
  "SA14n1193:12": "prajñāviyogena jadīkṛtāni || 3 ||",
  "SA14n1193:13": "śraddhādikānāmapi cendriyāṇāṃ",
  "SA14n1193:14": "prajñāgraṇī buddhirivendriyāṇām |",
  "SA14n1193:15": "guṇāguṇān vetti hi tatsanāthaḥ",
  "SA14n1193:16": "kleśakṣaye naipuṇametyataśca || 4 ||",
  "SA14n1193:17": "prajñāviyogāt phalalālasānāṃ",
  "SA14n1193:18": "naiva svatodānaviśuddhirasti |",
  "SA14n1193:19": "tyāgaṃ parārthaṃ hi vadanti dānaṃ",
  "SA14n1193:20": "śeṣastu vṛddhyārthamiva prayogaḥ || 5 ||",
  "SA14n1193:21": "prajñāsamunmīlitacakṣuṣastu",
  "SA14n1193:22": "dattvā svamāṃsānyapi bodhisattvāḥ |",
  "SA14n1193:23": "naivonnatiṃ nāvanatiṃ prayānti",
  "SA14n1193:24": "bhaiṣajyavṛkṣā iva nirviklapāḥ || 6 ||",
  "SA14n1193:25": "evaṃ sa bhūmiṃ prathamāmupaiti",
  "SA14n1193:26": "lokottarasyārthavidhipratiṣṭhām |",
  "SA14n1193:27": "akrodhanaḥ prītisamṛddhacetā",
  "SA14n1193:28": "dānairmahadbhirjagadarthacetāḥ || 7 ||",
  "SA14n1193:29": "prāyeṇa yasyāṃ balacakravartī",
  "SA14n1193:30": "bhavatyasaṃhāryamatiśca bodheḥ |",
  "SA14n1193:31": "prajñāguṇādeśitasatpatho'tha",
  "SA14n1193:32": "karmeṇa bhūmiṃ vimalāmupaiti || 8 ||",
  "SA14n1193:33": "yasyāṃ prakṛtyaiva viśuddhaśīlaśca-",
  "SA14n1193:34": "turmahādvīpapatiḥ sa bhūtvā |",
  "SA14n1193:35": "narendracūḍāmaṇisatkṛtājñaḥ",
  "SA14n1193:36": "sūryārhatāmeti yathā munīndraḥ || 9 ||",
  "SA14n1193:37": "tataḥ paraṃ kāmiṣu daivateṣu",
  "SA14n1193:38": "loke'pi ca dvitrisahasrasaṃkhye |",
  "SA14n1193:39": "aiśvaryamāpnoti tataḥ paraṃ ca",
  "SA14n1193:40": "bhūmiṃ viśodhya prabhavāṃ prabhāyāḥ || 10 ||",
  "SA14n1193:41": "śīlasya śuddhiḥ kuta eva tasya",
  "SA14n1193:42": "yaḥ prajñayā nāpahṛtāndhakāraḥ |",
  "SA14n1193:43": "prāyeṇa śīlāni hi tadviyogād",
  "SA14n1193:44": "āmarṣadoṣaiḥ kaluṣīkriyante || 11 ||",
  "SA14n1193:45": "nātmārthamapyasti tu yasya śīlaṃ",
  "SA14n1193:46": "prājñasya tasyāsti kathaṃ parārtham |",
  "SA14n1193:47": "yo dṛṣṭadoṣo bhavabandhanānāṃ",
  "SA14n1193:48": "lokān samastāṃstata ujjihīrṣuḥ || 12 ||",
  "SA14n1193:49": "prajñāvipakṣairhṛdi soparāge",
  "SA14n1193:50": "kṣamāguṇaḥ kena dhṛtiṃ labheta |",
  "SA14n1193:51": "guṇāguṇāavekṣaṇakātarākṣe",
  "SA14n1193:52": "khyāto guṇairvīrā iva kṣitīśe || 13 ||",
  "SA14n1193:53": "prajñānvitānāṃ tu parāpakārāḥ",
  "SA14n1193:54": "kṣamāguṇāḥ sthairyakarā bhavanti |",
  "SA14n1193:55": "bhadrātmakānāmiva vāraṇānāṃ",
  "SA14n1193:56": "karamāśrayā naikavidhā viṣeṣāḥ || 14 ||",
  "SA14n1193:57": "niṣkevalaṃ vīryamapi śramāya",
  "SA14n1193:58": "prajñāsanāthasya tu tasya kārye |",
  "SA14n1193:59": "anuttaraḥ siddhiguṇo'bhyudeti",
  "SA14n1193:60": "hartā tadutthasya pariśramasya || 15 ||",
  "SA14n1193:61": "yasmāt paraṃ sūkṣamataraṃ na kiṃ cid",
  "SA14n1193:62": "yannaipuṇānāṃ paramaḥ prakarṣaḥ |",
  "SA14n1193:63": "yatkāmadoṣādibhirāvṛtānāṃ",
  "SA14n1193:64": "manaḥpathaṃ naiva kadā cideti || 16 ||",
  "SA14n1193:65": "tad dhyānamekāntasukhābhirāmaṃ",
  "SA14n1193:66": "kathaṃ pravekṣyantyastāṃ manāṃsi |",
  "SA14n1193:67": "sthūlāni doṣopacayairmahadbhiḥ",
  "SA14n1193:68": "prajñotpathaṃ nyāyamivāśritānī || 17 ||",
  "SA14n1193:69": "prajñānirudyogamaterhi dṛṣṭirnā-",
  "SA14n1193:70": "yāti śuddhiṃ tadṛte na śīlam |",
  "SA14n1193:71": "samyakasmādhis tadṛte na labhyo",
  "SA14n1193:72": "duḥkhakṣayastadvirahāttathaiva || 18 ||",
  "SA14n1193:73": "prājñastu doṣādbhayamīkṣamāṇaḥ",
  "SA14n1193:74": "sukhānubaddhaṃ ca sukhaṃ guṇebhyaḥ |",
  "SA14n1193:75": "vihāya doṣāñjagadarthakāmo",
  "SA14n1193:76": "guṇābhirāmeṇa pathā prayāti || 19 ||",
  "SA14n1193:77": "samudyatastena samādhimetya",
  "SA14n1193:78": "prāpnoti vākkāyamanoviśuddhīḥ |",
  "SA14n1193:79": "ato'navadyena balena yuktaḥ",
  "SA14n1193:80": "pravartate lokahitodayeṣu || 20 ||",
  "SA14n1193:81": "dānena cābhīpsitabhūyasaiva",
  "SA14n1193:82": "priyairadīnairvacanāmṛtaiśca |",
  "SA14n1193:83": "naiṣkāraṇorjasvalayā ca vṛttyā",
  "SA14n1193:84": "parārthacaryāsu samaṃ samantāt || 21 ||",
  "SA14n1193:85": "sāmānyamartheṣu ca darśayitvā",
  "SA14n1193:86": "premṇā vaśīkṛtya manāṃsi teṣām |",
  "SA14n1193:87": "karoti nirvāṇasukhe pratiṣṭhāṃ",
  "SA14n1193:88": "prajñāguṇāvyāhatadharmacakraḥ || 22 ||",
  "SA14n1193:89": "prajñādyarogaiśca balairamībhira-",
  "SA14n1193:90": "dhyāsitaṃ nābhyupayātumīsā |",
  "SA14n1193:91": "ajīvikādurgatimṛtyunindā-",
  "SA14n1193:92": "śāradyadoṣāśrayaṇī bhayārtiḥ || 23 ||",
  "SA14n1193:93": "bhayāni sarvāṇi hi doṣajāni",
  "SA14n1193:94": "prajñā na doṣaiḥ sahavāsameti |",
  "SA14n1193:95": "śaradvyapoḍhābhragavākṣapakṣā",
  "SA14n1193:96": "bhā bhāskarasyeva tamaḥpratānaiḥ || 24 ||",
  "SA14n1193:97": "sahasraraśmerudaye'pi yāni",
  "SA14n1193:98": "tamāṃsi rundhanti jagadgatāni |",
  "SA14n1193:99": "nāmaikaśeṣāṇi karoti tāni",
  "SA14n1193:100": "prajñāprabhāyāḥ prasaraprabhāvaḥ || 25 ||",
  "SA14n1193:101": "na tatra bhūyaḥ karaṇīyam asti",
  "SA14n1193:102": "yatra prabhā sā balatāmupaiti |",
  "SA14n1193:103": "yugāntakālānalasaṃhṛte hi",
  "SA14n1193:104": "loke na dagdhavyakathāḥ prathante || 26 ||",
  "SA14n1193:105": "jyotīṃṣi sarvāṇyapi saṃhitāni",
  "SA14n1193:106": "prajñāprabhāṃ nālamathopayātum |",
  "SA14n1193:107": "atastayā nāsti parātivṛddhirga-",
  "SA14n1193:108": "rīyasī vāparihāṇijātiḥ || 27 ||",
  "SA14n1193:109": "saṃpūrṇatāṃ yāti sukhena śikṣā",
  "SA14n1193:110": "śīlāya cittapraśamāya caiva |",
  "SA14n1193:111": "prajñābhiyuktasya yatastato'syāṃ",
  "SA14n1193:112": "sarvābhisāreṇa parākrameta || 28 ||",
  "SA14n1193:113": "yā skandhadhātvāyatanapravṛttau",
  "SA14n1193:114": "satyāśrayā pratyayitā parīkṣā |",
  "SA14n1193:115": "kālatraye'pyeṣa samāsayuktyā",
  "SA14n1193:116": "prajñāvadātairviṣayapraveśaḥ || 29 ||",
  "SA14n1193:117": "kīrtiṃ vitanvanti jinātmajānāṃ",
  "SA14n1193:118": "prajñāvadātāścaritapradeśāḥ |",
  "SA14n1193:119": "guṇadvīṣāmapyatiduṣkuhāṇāṃ",
  "SA14n1193:120": "romāñcitā vismayapāratantryāt || 30 ||",
  "SA14n1193:121": "prajñābalaṃ dīptataraprabhāvaṃ",
  "SA14n1193:122": "nālaṃ prasoḍhuṃ sabalo'pi māraḥ |",
  "SA14n1193:123": "prajñāṃśavo vibhramayānti cakṣurna",
  "SA14n1193:124": "draṣṭum īśo hi yataḥ sa eva || 31 ||",
  "SA14n1193:125": "kandarpanārācanipātasāhī",
  "SA14n1193:126": "prajñāmayaṃ varma vitatya citte |",
  "SA14n1193:127": "vyūḍhāni rūpaprabhṛtīnyanekānyeko-",
  "SA14n1193:128": "'pi nirbhīrabhibhūya yāti || 32 ||",
  "SA14n1193:129": "adhīrasātmyaṃ bhayaviklavaṃ vā",
  "SA14n1193:130": "mūḍhocitaṃ śokaparigrahaṃ vā |",
  "SA14n1193:131": "svalpātmacitteṣvavagāḍhamūlaṃ",
  "SA14n1193:132": "roṣoparāgaṃ parijihmitaṃ vā || 33 ||",
  "SA14n1193:133": "dīneṣu kārpaṇyamalīmasatvaṃ",
  "SA14n1193:134": "kṛtāspadaṃ rāgiṣu cāpalaṃ vā |",
  "SA14n1193:135": "tejovihīneṣvalasatvasattvaṃ",
  "SA14n1193:136": "samuddhateṣvapraśamātmakatvam || 34 ||",
  "SA14n1193:137": "tāṃstāṃśca līnānapi doṣaleśān",
  "SA14n1193:138": "pṛthagvidhiṣvāśrayagahvareṣu |",
  "SA14n1193:139": "samudbhavantyeva parākaroti",
  "SA14n1193:140": "prajñā pratijñeva jagaddhitārthā || 35 ||",
  "SA14n1193:141": "niveśya doṣakṣayadhīrasaumyāṃ",
  "SA14n1193:142": "bhavasya tasyopari dṛṣṭilakṣmīm |",
  "SA14n1193:143": "svayaṃ munīndrairabhiṣicyate yat",
  "SA14n1193:144": "prahlādinā vyākaraṇāmṛtena || 36 ||",
  "SA14n1193:145": "ūrṇāprabhābhiśca mahāmunīnāṃ",
  "SA14n1193:146": "niśīthacandradyutihāsinībhiḥ |",
  "SA14n1193:147": "yadājyadhārābhirivādhvaragnirvi-",
  "SA14n1193:148": "bhāti mūrdhanyabhiṣicyamānaḥ || 37 ||",
  "SA14n1193:149": "avāpya yasmān muniyauvarājyaṃ",
  "SA14n1193:150": "samaṃ samantād visṛtātmabhāvaḥ |",
  "SA14n1193:151": "lokasya duḥkhaṃ praśamatyayatnād",
  "SA14n1193:152": "rajo mahāmegha iva pravṛṣṭaḥ || 38 ||",
  "SA14n1193:153": "prajñāprabhāvopanataḥ sa sarvaḥ",
  "SA14n1193:154": "prabhāvisāraḥ sugatātmajānām |",
  "SA14n1193:155": "ko vismayo vātra sutapriyāyā",
  "SA14n1193:156": "mātuḥ samīyādyadiyaṃ vibhūtiḥ || 39 ||",
  "SA14n1193:157": "daśaprakāro'pi yadā munīnāṃ",
  "SA14n1193:158": "tadāśrayādeva balaprakarṣaḥ |",
  "SA14n1193:159": "udetyasādhāraṇasundaraśca",
  "SA14n1193:160": "śeṣo'pyasaṃkhyo guṇaratnarāśiḥ || 40 ||",
  "SA14n1193:161": "śāstrāṇi cakṣuḥpratimāni loke",
  "SA14n1193:162": "nidhānabhūtāṃśca kalāviśeṣān |",
  "SA14n1193:163": "mantrān paritrāṇakṛto vicitrān",
  "SA14n1193:164": "dharmavyavasthāśca pṛthagviśeṣāḥ || 41 ||",
  "SA14n1193:165": "paryāyacitraṃ ca vimokṣamārgaṃ",
  "SA14n1193:166": "tattacca lokasya hitopapādi |",
  "SA14n1193:167": "yadbodhisattvāḥ pravidarśayanti",
  "SA14n1193:168": "prajñāprabhāvābhyudayaḥ sa sarvaḥ || 42 ||",
  "SA14n1193:169": "divyapratispardhibhirindriyārthai-",
  "SA14n1193:170": "rnarendrabhāve'pi hi bodhisattvāḥ |",
  "SA14n1193:171": "na yadvirūpāṃ prakṛtiṃ vrajanti",
  "SA14n1193:172": "prajñā guṇāmātyasanāthatā sā || 43 ||",
  "SA14n1193:173": "paropakāraikarasā ca maitrī",
  "SA14n1193:174": "rāgoparāgaprativarjitā ca |",
  "SA14n1193:175": "parasya duḥkheṣu parā dayā ca",
  "SA14n1193:176": "na śokabhārālasatāṃ gatā ca || 44 ||",
  "SA14n1193:177": "anuddhātatvaṃ mudite'pi citte",
  "SA14n1193:178": "tamonirārambhamupekṣitaṃ ca |",
  "SA14n1193:179": "te te guṇā<ś>cābhyadhikaṃ vibhānti",
  "SA14n1193:180": "prajñāniruddhapratipakṣamārgāḥ || 45 ||",
  "SA14n1193:181": "ko nāma lokasya parārthasādhurduḥkhai-",
  "SA14n1193:182": "kahetūni tamāṃsi hanyāt |",
  "SA14n1193:183": "avyāhatā jñānaśayāśayeṣu",
  "SA14n1193:184": "prajñā na cet syādatisūryādīptiḥ || 46 ||",
  "SA14n1193:185": "tatprāptaye śrutam aśītivikalpacitraṃ",
  "SA14n1193:186": "saṃceyam āśrayasahaṃ gurumabhyupetya |",
  "SA14n1193:187": "dvātriṃśatā tadadhigamya vivardhayeta",
  "SA14n1193:188": "samyaṅmanaḥ samavadhānakṛtairviśeṣaiḥ || 47 ||",
  "SA14n1193:189": "alpaśruto'ndha iva vetti na bhāvanāyā",
  "SA14n1193:190": "mārgaṃ vicintayati kāni ca tadvihīnaḥ |",
  "SA14n1193:191": "tasmācchrutaṃ prati yateta tadāśrayā hi",
  "SA14n1193:192": "prajñā samudbhavati cintanabhāvanābhyām || 48 ||",
  "SA14n1193:193": "praśnairavigrahamukhaiśca kathāviśeṣairmī-",
  "SA14n1193:194": "māṃsayārthagativīkṣaṇayā svayaṃ ca |",
  "SA14n1193:195": "prajñāvivṛddhimabhitaḥ prayateta nityaṃ",
  "SA14n1193:196": "dhyānena tadguṇavivṛddhikareṇa caiva || 49 ||",
  "SA14n1193:197": "prajñābhyupāyavidhireṣa samāsatastu",
  "SA14n1193:198": "dhyānaṃ tadarthaniyataḥ śrutivistaraśca |",
  "SA14n1193:199": "tābhyāṃ samudbhavati hi prabhavo guṇānāṃ",
  "SA14n1193:200": "prajñāprabhāsamudayo'gnirivāraṇībhyāṃ || 50 ||",
  "SA14n1193:201": "vidvajjanācaritamārgasamāśrayācca",
  "SA14n1193:202": "saṃmohahetugahanāni vivarjayeta |",
  "SA14n1193:203": "tairāvṛto na hi vibhātyudayasthito'pi",
  "SA14n1193:204": "toyāvalambijaladāntaritaḥ śaśīva || 51 ||",
  "SA14n1193:205": "ālasyajṛmbhitamatitvam asatsahāyā",
  "SA14n1193:206": "nidrānivṛttiraviniścayaśīlatā ca |",
  "SA14n1193:207": "jñāne muneriva kutūhalitānivṛttirmithyā-",
  "SA14n1193:208": "bhimānaparisaṃkucitāśca pṛcchāḥ || 52 ||",
  "SA14n1193:209": "dainyena cātmaparitāpasamudbhavena",
  "SA14n1193:210": "vidvajjanābhigamanādarakātaratvam |",
  "SA14n1193:211": "mithyāvikalpapaṭutā vitathā ca dṛṣṭirmohāya",
  "SA14n1193:212": "tatpraśamanāya tu tadvipakṣāḥ || 53 ||",
  "SA14n1193:213": "skandheṣu sāyatanadhātuṣu satyayuktyo",
  "SA14n1193:214": "hetudbhaveṣu śucayānavinirṇaye ca |",
  "SA14n1193:215": "dharmeṣu kauśalamaśeṣata eva yacca",
  "SA14n1193:216": "prajñāprayogaviṣayo'ṣṭavikalpa eṣaḥ || 54 ||",
  "SA14n1193:217": "niḥsāraphenanicayairaviśeṣi rūpaṃ",
  "SA14n1193:218": "tisro'pi budbudalavā iva vedanāśca |",
  "SA14n1193:219": "saṃjñāpi kāmaguṇaviprasṛtān satṛṣṇān",
  "SA14n1193:220": "bālān mṛgāniva vilobhayate marīciḥ || 55 ||",
  "SA14n1193:221": "saṃskārajātirapi tulyaguṇā kadalyā",
  "SA14n1193:222": "vijñānato'pi na ca yuktatarāsti māyā |",
  "SA14n1193:223": "yanniśrayādbhramati naikavikalpaceṣṭaṃ",
  "SA14n1193:224": "bhūtābhibhūtakuṇapapratimaṃ śarīram || 56 ||",
  "SA14n1193:225": "nātmā tadīyamapi cātra na kiṃ cid asti",
  "SA14n1193:226": "saṃghāta eṣa vividhāśūcisaṃnidhānaḥ |",
  "SA14n1193:227": "bālān pralambhayata eva ca sattvasaṃjñā",
  "SA14n1193:228": "svacchandaceṣṭa iva yantravidhau suyukte || 57 ||",
  "SA14n1193:229": "ātmā na cakṣurapi ca kṣaṇabhaṅguratvāt",
  "SA14n1193:230": "tadvan na cakṣuṣi na cātra yathaiva cakṣuḥ |",
  "SA14n1193:231": "ādhyātmikāyatanaśeṣam aśeṣam evam",
  "SA14n1193:232": "ātmīyavastuviṣayo'pi ca tadvivekī || 58 ||",
  "SA14n1193:233": "bāhyeṣu dhātuṣu śarīrasamāśritānāṃ",
  "SA14n1193:234": "nālpo'pi lakṣaṇavirodhakṛto'sti bhedaḥ |",
  "SA14n1193:235": "vijñānadhāturapi ca kṣaṇikaḥ sa nātmā",
  "SA14n1193:236": "tasmātparo'pi ca nabhaḥkusumaiḥ samānaḥ || 59 ||",
  "SA14n1193:237": "ityetadudbhavati kevalameva duḥkhaṃ",
  "SA14n1193:238": "tṛṣṇāvimūḍhamanaso vigmāttu tasyāḥ |",
  "SA14n1193:239": "śāntiḥ parā bhavati tarṣaharastu mārgaḥ",
  "SA14n1193:240": "śīlaṃ samādhipariśuddhatayā ca dṛṣṭiḥ || 60 ||",
  "SA14n1193:241": "tattatpratītya bhavatīti viśuddha-",
  "SA14n1193:242": "dṛṣṭirnāstyasti veti samupaiti sa naiva kiṃ cit |",
  "SA14n1193:243": "māyāmayaṃ jagadidaṃ pratibhāti tasya",
  "SA14n1193:244": "tasmāt sukhādiṣu bhavatyavikāradhīraḥ || 61 ||",
  "SA14n1193:245": "āsīdbhaviṣyati ca yat tad apīdṛgeva",
  "SA14n1193:246": "kaḥ saṃbhavo yadasukhaṃ na bhaved bhavebhyaḥ |",
  "SA14n1193:247": "evaṃ vyatītaviṣayeṣvapi vītarāgo",
  "SA14n1193:248": "naivābhinandati bhavāṃśca bhaviṣyato'pi || 62 ||",
  "SA14n1193:249": "ākārabhedaparuṣe puruṣo'parādhī",
  "SA14n1193:250": "ko nāma gūḍhanakharasphuṭadṛṣṭicihne |",
  "SA14n1193:251": "tatpraiṣyavṛttikapaṭānyanucintya rajyed",
  "SA14n1193:252": "viśvāsameva ca yathocitamatra yāyāt || 63 ||",
  "SA14n1193:253": "evaṃ vimuktamatirapyanukampakastu",
  "SA14n1193:254": "kleśāntaraṃ jagadanāthamavekṣamāṇaḥ |",
  "SA14n1193:255": "hīneṣu niṣpraṇayabuddhirudārabhāvān",
  "SA14n1193:256": "nirvātumicchati na buddhaguṇānalabdhvā || 64 ||",
  "SA14n1193:257": "lokārthasādhanavidhāvasamartharūpaṃ",
  "SA14n1193:258": "yānadvayaṃ samavādhūya sa pūrvameva |",
  "SA14n1193:259": "kāruṇyadeśitapatho munirājayānam",
  "SA14n1193:260": "ātasthivān parahitaikarasasvabhāvam || 65 ||",
  "SA14n1193:261": "hīnociteṣu na matirnamati praṇītā",
  "SA14n1193:262": "saṃtiṣṭhate mahati nāmahatī kadā cit |",
  "SA14n1193:263": "saṃsyandate śucibhireva śucisvabhāvaṃ",
  "SA14n1193:264": "tulyaistathānyadapi śāsvata eṣa yogaḥ || 66 ||",
  "SA14n1193:265": "svapnopamāni vigaṇayya sukhāsukhāni",
  "SA14n1193:266": "saṃmohadoṣakṛpaṇāṃ janatāṃ ca teṣu |",
  "SA14n1193:267": "ātmārtha eva gurutāṃ katham asya yāyād",
  "SA14n1193:268": "vyāpārabhāramavadhūya parārtharamyam || 67 ||",
  "SA14n1193:269": "yaḥ sarvalokahitakāraṇasarvaceṣṭastya-",
  "SA14n1193:270": "ktvātmadṛṣṭiviṣayaṃ vitathābhimānam |",
  "SA14n1193:271": "sarvatra śāntamatiradvayamārgacārī",
  "SA14n1193:272": "so'tyadbhutaścaritanirvṛta eva loke || 68 ||",
  "SA14n1193:273": "prajñāviśuddhikaramuttamayānametat",
  "SA14n1193:274": "sarvajñatā tadudayā hi mahāmunīnām |",
  "SA14n1193:275": "lokasya yā nayanatāmiva saṃprayāti",
  "SA14n1193:276": "dīptāṃśumaṇḍalatalotpatitā prabheva || 69 ||",
  "SA14n1193:277": "saṃsāradoṣabharanirmathito'pi naiva",
  "SA14n1193:278": "prajñāvivecanatayā parikhīdyate yaḥ |",
  "SA14n1193:279": "nātmābhikhedapariviklavatāṃ sa yāti",
  "SA14n1193:280": "yānasya buddhaguṇasaṃjananasya loke || 70 ||",
  "SA14n1193:281": "paśyanti cābhutamayaṃ sugataprabhāvaṃ",
  "SA14n1193:282": "romāñcakañcukitasarvaśarīradeśāḥ |",
  "SA14n1193:283": "tadgāminaṃ pariharanti ca yānamārgaṃ",
  "SA14n1193:284": "kiṃ nāma kāraṇamṛte śaṭhaceṣṭitebhyaḥ || 71 ||",
  "SA14n1193:285": "ko nāma mārakalinānabhibhūtacetāḥ",
  "SA14n1193:286": "saṃbuddhadharmaguṇaratnanidhānabhūtam |",
  "SA14n1193:287": "sarvajñayānamapayānam anarthapaṅkād",
  "SA14n1193:288": "ākroṣṭumarhati na cejjagato'sya vairam || 72 ||",
  "SA14n1193:289": "lokārthasādhanapare jinarājavaṃśe",
  "SA14n1193:290": "prajñānimīlitanayeṣu pariskhalatsu |",
  "SA14n1193:291": "cittaṃ narasya karuṇāmṛdu kasya na syāt",
  "SA14n1193:292": "tanmohadoṣaśamanāya dṛḍhaṃ ca vīryam || 73 ||",
  "SA14n1193:293": "prajñāyā janayati yaḥ parāṃ viśuddhiṃ",
  "SA14n1193:294": "nirmokṣaḥ kathamiva tasya dūrataḥ syāt |",
  "SA14n1193:295": "naivāsmātparataramasti śīlam anyat",
  "SA14n1193:296": "tattasmād bhajata vimokṣakāṅkṣiṇo hi || 74 ||",
  "SA14n1193:297": " || prajñāpāramitāsa[māsa]ścāyaṃ pāramitāsamāsaḥ ||",
  "SA14n1193:298": "viśuddhamaunīndramanastaḍāga-",
  "SA14n1193:299": "prasūtasūtrāntasaroruhebhyaḥ |",
  "SA14n1193:300": "ādāya śurabhramareṇa samyag",
  "SA14n1193:301": "madhūrjitaṃ pāramitāsamāse ||"
}