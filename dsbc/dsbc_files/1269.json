{
    "1269:0": "atha dvitīyaṃ prakaraṇam|",
    "1269:1": "pūrvamaṣṭavidhā vādadharmā uktāḥ|",
    "1269:2": "atha nigraha[sthāna]dharmān vakṣyāmaḥ|",
    "1269:3": "nanu katame vādadharmāḥ|",
    "1269:4": "(atrocyate) yathā catvāri mahābhūtāni prajñaptireva|",
    "1269:5": "kasmāt|",
    "1269:6": "rūpādidharmatvādeva|",
    "1269:7": "aparaḥ punarāha|",
    "1269:8": "catvāri mahābhūtāni tattvataḥ santi|",
    "1269:9": "kathametajjñātam|",
    "1269:10": "kāṭhinyaṃ pṛthivīdharmo yāvaccalatvaṃ vāyudharmaḥ|",
    "1269:11": "tatsaditi jñeyam|",
    "1269:12": "etacca prativiruddham|",
    "1269:13": "tasmādvivādaḥ|",
    "1269:14": "yathā vā|",
    "1269:15": "pṛthivī śarīrakāraṇameva|",
    "1269:16": "aparāṇi mahābhūtānyapi tathā|",
    "1269:17": "atra dūṣaṇam|",
    "1269:18": "pṛthivyādi sarvavastusādhanasamarthaṃ sat,",
    "1269:19": "kathaṃ śarīramātraṃ sādhayediti nātra vivādaḥ|",
    "1269:20": "yadyevaṃ na syāttadā vāda ityucyate|",
    "1269:21": "nanu kāni nigrahasthānāni|",
    "1269:22": "(atrocyate) yathā śabdo nityo'mūrtatvādākāśavat|",
    "1269:23": "atra dūṣaṇam|",
    "1269:24": "yadyapi śabdo'mūrtaḥ|",
    "1269:25": "tathāpyaindriyakaḥ,",
    "1269:26": "saṃpratighaḥ,",
    "1269:27": "ghaṭavatkṛtakaḥ|",
    "1269:28": "api tvākāśe 'kṛtake kathaṃ tadṛṣṭāntalābhaḥ|",
    "1269:29": "etannigrahasthānamityucyate|",
    "1269:30": "atha ghaṭo mūrta ityanityaḥ śabdasya tvamūrtatvāt kathaṃ tadṛṣṭāntalābhaḥ|",
    "1269:31": "atra dūṣaṇam|",
    "1269:32": "śabdo ghaṭabhinno'pyaindriyakaḥ śrāvaṇatvāt|",
    "1269:33": "tasmādanityaḥ|",
    "1269:34": "nanu kasyārthasyānigrahasthānatvāpattiḥ|",
    "1269:35": "saṃskārā vijñānañca kṛtakatvādanityam|",
    "1269:36": "nirvāṇamakṛtakatvānnityam|",
    "1269:37": "etadvākyaṃ samyakpadarasam|",
    "1269:38": "etaducyate 'nigrahasthānam|",
    "1269:39": "nanu kiṃ vacanaṃ dūṣayitavyam|",
    "1269:40": "cuayte|",
    "1269:41": "vākyavaiparītyaṃ,",
    "1269:42": "asaddhetusthāpanaṃ,",
    "1269:43": "udāharaṇavaiṣamyañcaitaddūṣayitavyam|",
    "1269:44": "yatha saṃjñā saṃyojanocchedikā,",
    "1269:45": "ityukte kaścit pṛcchet|",
    "1269:46": "kathaṃ saṃjñā samyojanocchedikā|",
    "1269:47": "jñānasya saṃjñāta utpādaṃ pūrvamanutkā saṃjñāmātrakathanādvākyavaiparītyamitīdaṃ dūṣaṇīyam|",
    "1269:48": "nanu kathaṃ punaretadvākyamucyate|",
    "1269:49": "asidvasthāpanānnigrahasthānāpattijñāpanārthamuktam|",
    "1269:50": "aparañca| anuyojyānanuyogaḥ|",
    "1269:51": "prativaktavye 'prativaktavyata|",
    "1269:52": "trirabhihitasya parairavijñātam|",
    "1269:53": "trirabhihitasya svayamavijñānam|",
    "1269:54": "etāni nigrahasthānāni|",
    "1269:55": "anyacca| pareṇa vivadamānastadvikalatāṃ nāvagacchati|",
    "1269:56": "anyastu vadati|",
    "1269:57": "eṣo'rthaḥ mithyaiva,",
    "1269:58": "kiṃ bhavānnopalabhate tadā nigrahasthānam|",
    "1269:59": "anyacca| parasya samyagarthe doṣasamārope'pi nigrahasthānam|",
    "1269:60": "anyacca| vādinoktaṃ sarvairvijñātamapyasāveva (prativādī)",
    "1269:61": "nāvagacchati cettadapi nigrahasthānam|",
    "1269:62": "praśno'pi tadvat|",
    "1269:63": "etāni nigrahasthānāni vādasya mahākaṇṭakāni gambhīraduḥkhāni jñeyāni,",
    "1269:64": "drutañca heyāni|",
    "1269:65": "nanu praśnāḥ katividhāḥ|",
    "1269:66": "ucyate|",
    "1269:67": "trividhāḥ|",
    "1269:68": "yathā vacanasamaḥ,",
    "1269:69": "arthasamaḥ,",
    "1269:70": "hetusamaśca|",
    "1269:71": "yadi vādinastaistribhiḥ praśnottarāṇi na kurvanti tadvibhrāntam|",
    "1269:72": "yadyeteṣāṃ trayāṇāmuttarāṇāmanyatamaṃ nyūnaṃ syāttadasampannam|",
    "1269:73": "yadi vadedahamevamprakārān trīn praśnānnāvagacchāmi mama yathājñānamanyonyaṃ praṣṭavyaṃ, tadā'doṣaḥ|",
    "1269:74": "vākyasamaḥ yathā|",
    "1269:75": "ātmā nāstītyukte tadvākyāśrayeṇa praśnaḥ|",
    "1269:76": "ayaṃ vākyasama ityucyate|",
    "1269:77": "arthasamaḥ tanmatopādānamevāyamarthasama ityucyate|",
    "1269:78": "hetusamaḥ| paramanogaterutpādakasya hetorjñāmayaṃ hetusama ityucyate|",
    "1269:79": "evaṃ sāmarthye satye nigrahasthānamityucyate|",
    "1269:80": "yadyatidrutaṃ vadecchrotāraśca nāvagaccheyustadapi nigrahasthānam|",
    "1269:81": "athaitāvamātramaparāṇi vā santi|",
    "1269:82": "atrocyate|",
    "1269:83": "santyeva yathā nyūnaṃ,",
    "1269:84": "adhikam nirarthakaṃ,",
    "1269:85": "aprāptakālaṃ,",
    "1269:86": "punaruktaṃ pratijñāsannyāsa ityādīni nigrahasthānānītyucyante|",
    "1269:87": "yadyevamādi pūrvapakṣī vadet,",
    "1269:88": "tadā nigrahasthānāpattiḥ|",
    "1269:89": "atha pratijñāvirodhaḥ|",
    "1269:90": "yathā vijñānaṃ nityam|",
    "1269:91": "kasmāt|",
    "1269:92": "vijñānasya hi dvaividhyam|",
    "1269:93": "vijñānotpāttirvijñākriyā ca|",
    "1269:94": "ghaṭasyāpi dvaividhyam,",
    "1269:95": "ghaṭotpattirghaṭakriyā ca|",
    "1269:96": "evaṃ vijñānamutpādyamānameva sakriyaṃ tasmānnityam|",
    "1269:97": "ghaṭasya tūtpattyanantaraṃ sakriyatvam,",
    "1269:98": "tasmādanityatvam|",
    "1269:99": "atra dūṣaṇam|",
    "1269:100": "utpattāveva sakriyatvānnityamiti ceddīpasyāpyutpattāveva sakriyatvānnityatvaprasaṅgaḥ|",
    "1269:101": "atha dīpaścakṣuṣā dṛṣṭaḥ syāt,",
    "1269:102": "śabdaśca śravaṇena śrūyata iti kathaṃ dṛṣṭāntopapattiḥ|",
    "1269:103": "etatpratijñāsannyāsanigrahasthānam|",
    "1269:104": "aparañca| kecidvadantyātmā nitya iti|",
    "1269:105": "kathaṃ jñātam|",
    "1269:106": "anaindriyakatvāt|",
    "1269:107": "yathā ākāśo'naindriyakatvānnityaḥ|",
    "1269:108": "atra dūṣaṇam|",
    "1269:109": "paramāṇavo'nindriyakā api tvanityāḥ|",
    "1269:110": "atrocyate| ātmā'kṛtakatvānnityaḥ paramāṇavastu kṛtakatvādanityāḥ|",
    "1269:111": "atra dūṣaṇam|",
    "1269:112": "anupalabdheriti bhavatā pūrvamuktam|",
    "1269:113": "adhunā cākṛtakatvādibyucyate|",
    "1269:114": "ayaṃ pratijñāvirodhaḥ|",
    "1269:115": "nanūcyate 'haṃ virodhīti cebhdavāṃstu mama vacanaṃ pratikūlayan katham virodhau na syāt|",
    "1269:116": "kiñca kathametadyuktisaham|",
    "1269:117": "yadvi viruddhamityucyate mayā,",
    "1269:118": "sā bhavata eva vacanasya pūrvoktenārthan pratikūlatā|",
    "1269:119": "tasmādviruddhamityuktam|",
    "1269:120": "anyacca| bhavatā pūrvamuktamaspaṣṭatvānme saṃśaya utpanna iti|",
    "1269:121": "nāhaṃ bhavadvirodhītyevaṃ saṃśayena virodhaḥ|",
    "1269:122": "etadapi nigrahasthānamiti|",
    "1269:123": "||iti dvitīyaṃ prakaraṇam||"
}