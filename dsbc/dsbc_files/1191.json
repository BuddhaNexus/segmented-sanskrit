{
    "1191:0": "4. vīryapāramitāsamāsaḥ",
    "1191:1": "sarvaṃsahe kṣāntibale ca rūḍhe",
    "1191:2": "sarvādbhutānyārabhate sa śauryāt|",
    "1191:3": "vīryeṇa kāryāntamahābalena",
    "1191:4": "yasmāt sa devānapi yātyatītya || 1 ||",
    "1191:5": "sudṛśyapārāṇyapi laukikāni",
    "1191:6": "kāryāṇi nirvīryaduruttarāṇi|",
    "1191:7": "aprāpyarūpaṃ tu na kiṃ cid asti",
    "1191:8": "khedānabhijñena parākrameṇa || 2 ||",
    "1191:9": "ārabdham evotsahate na hīna",
    "1191:10": "ārabhya madhyastu viṣādameti|",
    "1191:11": "parārtham aśrāntaparākramāste",
    "1191:12": "nirvāṇamutsṛjya samārabhante || 3 ||",
    "1191:13": "prāyeṇa dainyopahato jano'yaṃ",
    "1191:14": "svādhīnavīryo'pi gurusvakāryaḥ|",
    "1191:15": "ahīnavīryasya tu merusāro'pyakhe-",
    "1191:16": "dasādhyaḥ parakāryabhāraḥ || 4 ||",
    "1191:17": "saṃsārakoṭyorubhayoḥ samānaiḥ",
    "1191:18": "prayāmasārairdivasairyadi syuḥ|",
    "1191:19": "saṃvatsarāstatpracayātidīrghaiḥ",
    "1191:20": "kalpaiḥ samudrodakabindutulyaiḥ || 5 ||",
    "1191:21": "utpādayeyaṃ yadi bodhicittam",
    "1191:22": "ekaikametena parākrameṇa|",
    "1191:23": "saṃbhāraśeṣaṃ cinuyāṃ tathāpi",
    "1191:24": "bhūyaḥsamutsāritakhedadainyaḥ || 6 ||",
    "1191:25": "ekaikamevaṃ yadi bodhicittaṃ",
    "1191:26": "prāpyeta saṃbhāravidhiśca śeṣaḥ|",
    "1191:27": "tathāpi bodhiṃ samudānayeyaṃ",
    "1191:28": "kṛpāsamutsāhitadhairyasāraḥ || 7 ||",
    "1191:29": "saṃsāraduḥkhaṃ svamacintayitvā",
    "1191:30": "saṃnāhadārḍhyaṃ yadacintyamevam|",
    "1191:31": "ādyaṃ samādānamidaṃ vadanti",
    "1191:32": "vīravratānāṃ karuṇātmakānām || 8 ||",
    "1191:33": "padbhyāṃ atikramya kukūlakalpāṃ",
    "1191:34": "kṛtsnāṃ mahīmāyudhasaṃvṛtāṃ vā|",
    "1191:35": "yaddraṣṭum apyutsahate munīndrān",
    "1191:36": "pātuṃ śivaṃ dharmarasāyanaṃ vā || 9 ||",
    "1191:37": "saṃsārapaṅkājjanatā mayeyam",
    "1191:38": "uddhṛtya nirvāṇasukhe niveṣyā|",
    "1191:39": "utkṣepanikṣepavidhau padānāṃ",
    "1191:40": "yaccittamevaṃ ca samādadāti || 10 ||",
    "1191:41": "yad vā hitārthaṃ kramate parasya",
    "1191:42": "puṇyāni vā lokahitāya cittam|",
    "1191:43": "parākramaḥ so'kṣayavikramāṇāṃ",
    "1191:44": "śrīmatsamādānavidhau dvitīyaḥ || 11 ||",
    "1191:45": "puṇyasya cotpādasamānakālaṃ",
    "1191:46": "saṃbuddhabhāve pariṇāmanaṃ yat|",
    "1191:47": "tadakṣayatvaṃ samudāgamāya",
    "1191:48": "śubhaṃ samādānam udāharanti || 12 ||",
    "1191:49": "mahatsu vāmbhaḥsu yathā niṣikto",
    "1191:50": "naivodabinduḥ kṣayamabhyupaiti|",
    "1191:51": "saṃbuddhabhāve pariṇāmitasya",
    "1191:52": "tathaiva puṇyasya na saṃkṣayo'sti || 13 ||",
    "1191:53": "tathā hi kāruṇyaviśuddhabuddhiḥ",
    "1191:54": "sarvajñabhāvāya phalantyamūni|",
    "1191:55": "puṇyāni lokasya carācarasyetyevaṃ",
    "1191:56": "sa tānyārabhate susattvaḥ || 14 ||",
    "1191:57": "mahātrisāhasragataṃ janaughaṃ",
    "1191:58": "nirvāpayedekadine na kaścit|",
    "1191:59": "kalpaṃ tathā naiva ca sattvadhātoste-",
    "1191:60": "nāpi kiṃ cit paripācitaṃ syāt || 15 ||",
    "1191:61": "śrutvāpi sattvākṣayatāṃ imāṃ yaḥ",
    "1191:62": "sattvānaśeṣān vininīṣureva|",
    "1191:63": "viṣādadoṣānavalīḍhavīryaḥ",
    "1191:64": "kastasya dūrastha ihārthasāraḥ || 16 ||",
    "1191:65": "yaḥ puṇyarāśirjagatāṃ samagrastā-",
    "1191:66": "vatpramāṇairdaśabhirjinasya|",
    "1191:67": "nivṛttimāgacchati romakūpa",
    "1191:68": "ekaika ekaikasujātaromā || 17 ||",
    "1191:69": "śatena bhūyo guṇitena tena",
    "1191:70": "puṇyena romāspadasaṃśritena|",
    "1191:71": "bhavatyanuvyañjanamekameva",
    "1191:72": "śeṣāṇi tasya prabhavanti kāye || 18 ||",
    "1191:73": "tāvadguṇādeva ca puṇyarāśesta-",
    "1191:74": "smād anuvyañjanasaṃpraviṣṭāt |",
    "1191:75": "pratyekaśastasya jinatvaśaṃsi",
    "1191:76": "nirvartate lakṣaṇacitrakarma || 19 ||",
    "1191:77": "sallakṣaṇotpattinimittabhūtāt",
    "1191:78": "sahasrasaṃkhyāguṇitācca puṇyāt|",
    "1191:79": "nirvartate tasya manojñavarṇā",
    "1191:80": "saṃpūrṇacandrasphuṭakāntirūrṇā || 20 ||",
    "1191:81": "ūrṇābhinirvṛttikarmaṃ ca puṇyaṃ",
    "1191:82": "śatapramāṇairguṇitaṃ sahasraiḥ|",
    "1191:83": "karoti tasyānavalokanīyaṃ",
    "1191:84": "chattarābhamuṣṇīṣalalāmaśīrṣam || 21 ||",
    "1191:85": "ayaṃ mayā puṇyanidhiḥ parārthaṃ",
    "1191:86": "saṃceya ityuttamabodhicitte|",
    "1191:87": "vīryonmukhe kena mukhena tasmiṃlla-",
    "1191:88": "yapravṛttirlabhatāṃ praveśam || 22 ||",
    "1191:89": "sarve'pi sattvā yadi lokadhātau",
    "1191:90": "pratyekabuddhaiḥ sadṛśā bhaveyuḥ|",
    "1191:91": "jñānena tebhyo'bhyadhikaprabhāvaḥ",
    "1191:92": "kṣāntistha eko'pi hi bodhisattvaḥ || 23 ||",
    "1191:93": "tathaiva ca kṣāntibalasthitebhyo",
    "1191:94": "viśeṣaṃ āyātyavivartanīyaḥ|",
    "1191:95": "aśrāntavīryaḥ kuśalaprayoge",
    "1191:96": "yallaukike caiva taduttare ca || 24 ||",
    "1191:97": "tebhyaḥ puṇaścādhika eva dūraṃ",
    "1191:98": "ya ekajātipratibaddhabodhiḥ|",
    "1191:99": "ka eva vādo dṛḍhavīryavatsu",
    "1191:100": "ye bodhimūle prathamaṃ niṣaṇṇāḥ || 25 ||",
    "1191:101": "tādṛgvidhajñānaviśuddhipūrṇaḥ",
    "1191:102": "syād yadyaśeṣena ca lokadhātuḥ|",
    "1191:103": "yāyāt kalāṃ so'pi na bodhimūle",
    "1191:104": "sthitasya mārātikṛtāntyajāteḥ || 26 ||",
    "1191:105": "tādṛgvidhajñānaviśuddhacittāḥ",
    "1191:106": "syuryadyaśeṣena ca sarvalokāḥ|",
    "1191:107": "balapradeśasya muneratulyāḥ",
    "1191:108": "kalāpradeśairapi te samagrāḥ || 27 ||",
    "1191:109": "ityadbhutajñānasamudramekaḥ",
    "1191:110": "kṛpātmako nistarituṃ prayāti|",
    "1191:111": "avyāhatājñaḥ paracittacāre",
    "1191:112": "prajñāvabhāsaṃ ca nabho viśālam || 28 ||",
    "1191:113": "sarveṣu sattveṣu ca tasya mātrā",
    "1191:114": "samānahārdā karuṇābhyudeti|",
    "1191:115": "saṃbuddhadharmāśca tato'vaśeṣāsta-",
    "1191:116": "syādbhutāḥ saṃprabhavantyaśeṣāḥ || 29 ||",
    "1191:117": "ebhiḥ samādānaguṇairupetaḥ",
    "1191:118": "śuddhaśravaiḥ pelavasattvasattvaiḥ|",
    "1191:119": "aṣṭābhiraṅgairiva tattvamārgo",
    "1191:120": "vīryaprakarṣādadhikaṃ vibhāti || 30 ||",
    "1191:121": "vīryaṃ tridhā yaḥ kuśalaprayogasta-",
    "1191:122": "smācca vākkāyamanoviśeṣāḥ|",
    "1191:123": "prasthānaviṣṭhānasamāhitasya",
    "1191:124": "vīryaprakarṣasya manomayasya || 31 ||",
    "1191:125": "yo bodhicittapraṇayaḥ samaśca",
    "1191:126": "kṛpā ca nairātmagatau kṣamā ca|",
    "1191:127": "caturvikalpo janasaṃgrahaśca",
    "1191:128": "sarveṣu dharmeṣvanavagrahaśca || 32 ||",
    "1191:129": "saṃsārapaṅke yadakhinnatā ca",
    "1191:130": "traidhātukasyaiva ca nopalabdhiḥ|",
    "1191:131": "sarvasvadānaṃ na ca tena mānaḥ",
    "1191:132": "samagraśikṣasya na śikṣayā ca || 33 ||",
    "1191:133": "parāpakārairavikāri dhairyaṃ",
    "1191:134": "cittasya cātyantamavikṣatiryā|",
    "1191:135": "ārambhadārḍhayaṃ kuśalakriyāsu",
    "1191:136": "prītirvivekaikarasā ca citte || 34 ||",
    "1191:137": "caturvidhadhyānasamāpanaṃ ca",
    "1191:138": "cittasya nidhyaptiranātmataśca|",
    "1191:139": "atṛptatā ca śrutavistareṇa",
    "1191:140": "nyāyapraveśastadavekṣaṇācca || 35 ||",
    "1191:141": "yā deśanā caiva yathāśrutānāṃ",
    "1191:142": "jñānaṃ ca dharmānabhilāpyatāyām|",
    "1191:143": "pañcasvabhijñāsu ca yatprabhutvam",
    "1191:144": "abhyāsamātrā ca taduttarāyām || 36 ||",
    "1191:145": "yadṛddhipādeṣvabhinirhṛtatvaṃ",
    "1191:146": "paṭvī na cāyāsamayī kriyā ca|",
    "1191:147": "samyakprahāṇeṣu ca yaḥ prayogaḥ",
    "1191:148": "śubhāśubhādeva ca yā vimuktiḥ || 37 ||",
    "1191:149": "yatkauśalaṃ cendriyanirṇayeṣu",
    "1191:150": "nirindriyān paśyati yacca dharmān|",
    "1191:151": "mārgasya saṃbhāravimārgaṇaṃ ca",
    "1191:152": "na cāsya kiṃ cid gamanaṃ kutaścit || 38 ||",
    "1191:153": "ityevamādyaṃ pṛthucitravīryaṃ",
    "1191:154": "prasthānaviṣṭhānaviśeṣacitram|",
    "1191:155": "asyākṣayatvapratipūraṇārthaṃ",
    "1191:156": "prasthānakarmaiva viśeṣahetuḥ || 39 ||",
    "1191:157": "nimittakarmasvapi na pravartate",
    "1191:158": "vitiṣṭhate jñānamaye ca karmaṇi|",
    "1191:159": "kṛpāguṇādyan na jahāti saṃskṛtaṃ",
    "1191:160": "na coruvīryo'pi patatyasaṃskṛte || 40 ||",
    "1191:161": "apūrvadharmaśrutiralparogatā",
    "1191:162": "durāsadetvaṃ śrutadharmadhāraṇam|",
    "1191:163": "amānuṣebhyo'pi parigrahodayaḥ",
    "1191:164": "samādhigotrapratilambha eva ca || 41 ||",
    "1191:165": "vrajantyavandhyā yadaharniśaṃ kriyā",
    "1191:166": "guṇairna hāniṃ yadutpaiti mauśalīm|",
    "1191:167": "vivṛddha evotpalavacca yadguṇairma-",
    "1191:168": "nuṣyadharmādadhikaprayojanaiḥ || 42 ||",
    "1191:169": "yaśo viśālam ca sukhaṃ sukhodayaṃ",
    "1191:170": "vinītakārpaṇyamanastvamuttamam|",
    "1191:171": "guṇāśca teṣāmiha dṛṣṭadhārmikā",
    "1191:172": "bhavanti vīryāditi ko'tra vismayaḥ || 43 ||",
    "1191:173": "trailokyapūjyamamitoruguṇaṃ",
    "1191:174": "saṃbuddhabhāvamapi yānti yadā|",
    "1191:175": "vīryavyāpāśrayadṛḍhāḥ puruṣā",
    "1191:176": "na syād ataḥ ka iva vīryaparaḥ || 44 ||",
    "1191:177": "|| vīryapāramitāsamāsaḥ ||"
}