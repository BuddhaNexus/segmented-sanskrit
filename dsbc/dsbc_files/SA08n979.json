{
  "SA08n979:0": "(20) kausīdyavargaḥ",
  "SA08n979:1": "kausīdyena jñānahāniḥ",
  "SA08n979:2": "kausīdyamatimāyā ca dambhaḥ pāruṣyameva ca |",
  "SA08n979:3": "niyātabhūmayo dṛṣṭā jñānasya ca vivarjanam ||1 ||",
  "SA08n979:4": "saṃśleṣaścāpyasādhūnāṃ sādhūnāṃ varjanaṃ tathā |",
  "SA08n979:5": "nāśasya hetavaḥ śaktā mithyādarśanameva ca ||2 ||",
  "SA08n979:6": "adeśakālasaṃraṃbho vācyāvācyamajānataḥ |",
  "SA08n979:7": "anarthabhūmayo hyetā visrambhaścāpi tanmayaḥ ||3 ||",
  "SA08n979:8": "anarthabhūmayaḥ",
  "SA08n979:9": "yena tena ca samprītiḥ yatra tatra ca bhojanam |",
  "SA08n979:10": "lāghavaṃ janayatyante'praśaṃsā cātmanastathā ||4 ||",
  "SA08n979:11": "dhairyanāśaḥ smṛtibhraṃśo virodhaḥ pārthivena ca |",
  "SA08n979:12": "akrāntamṛtyavo hyete krūratā manasi sthitā ||5 ||",
  "SA08n979:13": "akarmāphalatattvajño dharmādharmavahiṣkṛtaḥ |",
  "SA08n979:14": "puruṣaḥ sādhunirmuktaḥ prapātagamanāśayaḥ ||6 ||",
  "SA08n979:15": "kausīdyamatinidrā ca rasanā gṛhyate tathā |",
  "SA08n979:16": "puṃdveṣayonayaḥ proktāḥ pāruṣyavacanaṃ tathā ||7 ||",
  "SA08n979:17": "lobho'pamānasya kāraṇam",
  "SA08n979:18": "atilobho'pamānaśca atimānaśca cāpalam |",
  "SA08n979:19": "dharmavarjyā kāmasevā mohasya paridīpikāḥ ||8 ||",
  "SA08n979:20": "doṣāṇāṃ mūlaṃ kausīdyam",
  "SA08n979:21": "trayāṇāmiha doṣāṇāṃ kausīdyaṃ mūlamucyate |",
  "SA08n979:22": "vīryārambheṇa duṣyante doṣā manasi sambhavāḥ ||9 ||",
  "SA08n979:23": "vīryārambheṇa hi phalaṃ hyavaśyamupabhujyate |",
  "SA08n979:24": "nyāyenārabdhatattvasya karmaṇo dṛśyate phalam ||10 ||",
  "SA08n979:25": "karmaṇastrividhasyāsya phalaṃ trividhamucyate |",
  "SA08n979:26": "trirāśiniyataṃ tacca triśūlaṃ tribhavānugam ||11 ||",
  "SA08n979:27": "kausīdyasevino durgatiḥ",
  "SA08n979:28": "pāpasevī pracaṇḍo yaḥ kausīdyamapi sevate |",
  "SA08n979:29": "dharmavidveṣakaḥ krūro'nutpathānupadhāvati ||12 ||",
  "SA08n979:30": "yasya tasya ca santuṣṭo yasya tasya prakupyati |",
  "SA08n979:31": "yatra tatra ca saṃsakto sa mūḍha iti kathyate ||13 ||",
  "SA08n979:32": "kausīdyaṃ (yat)",
  "SA08n979:33": "svamanasaḥ pramādaviṣamūrcchitam |",
  "SA08n979:34": "prapātaṃ taṃ ca saṃrabdhamavisaṃvādakaṃ param ||14 ||",
  "SA08n979:35": "vīryārambhe mahāpāpakausīdyamalavarjitāḥ |",
  "SA08n979:36": "vimukterupabhoktāraste janāḥ sukhabhāginaḥ ||15 ||",
  "SA08n979:37": "kausīdyaṃ sarvadharmāṇāmajarāmarakārakam |",
  "SA08n979:38": "tena doṣeṇa mahatā narā duḥkhasya bhāginaḥ ||16 ||",
  "SA08n979:39": "sahāyaśca sukhāveśī tasmāt tat parivarjayet |",
  "SA08n979:40": "tena viddho hi puruṣaḥ svadhistutyaḥ samantataḥ ||17 ||",
  "SA08n979:41": "kusīdasyālpabhāgasya mohāpahṛtacetasaḥ |",
  "SA08n979:42": "kutsitaḥ svajanaiḥ sarvairna gatirvidyate śivā ||18 ||",
  "SA08n979:43": "kausīdyarataḥ pāpībhavati",
  "SA08n979:44": "kausīdyapāpasaṃsargīstyānamiddhaṃ tathaiva ca |",
  "SA08n979:45": "mokṣadvāravighātāya bhavantyete mahābhayāḥ ||19 ||",
  "SA08n979:46": "duḥkhasyaitāni harmyāṇi",
  "SA08n979:47": "āhrīkyamanapatrāpyamauddhatyaṃ pāpamitratā |",
  "SA08n979:48": "duḥkhasyaitāni harmyāṇi tebhyo rakṣennu paṇḍitaḥ ||20 ||",
  "SA08n979:49": "kausīdyenābhibhūtā ye nirārambhā gatitviṣaḥ |",
  "SA08n979:50": "socchvāsamaraṇaṃ teṣāṃ jīvitaṃ cāpi niṣphalam ||21 ||",
  "SA08n979:51": "jīvamānā na jīvanti kausīdyopahatā narāḥ |",
  "SA08n979:52": "mṛtyoratyadhikaṃ hyetat kausīdyamiti manyate ||22 ||",
  "SA08n979:53": "ārabdhavīryā eva bhavasāgaraṃ taranti",
  "SA08n979:54": "kausīdyapaṅkamagnā ye magnāste duḥkhasaṃstare |",
  "SA08n979:55": "ārabdhavīryā ye puṃsaste tīrṇā bhavasāgarāt ||23 ||",
  "SA08n979:56": "kausīdyānmandavīryo yaḥ sadā pāparataśca yaḥ |",
  "SA08n979:57": "sa jīvamāno'pi mṛto mṛtastu narakāya saḥ ||24 ||",
  "SA08n979:58": "mānavānāṃ nirdhanatve kausīdyaṃ kāraṇam",
  "SA08n979:59": "nirdhanāḥ paśubhistulyāste narā duḥkhabhāginaḥ |",
  "SA08n979:60": "parapiṇḍāśino dīnāḥ kausīdyaṃ tatra kāraṇam ||25 ||",
  "SA08n979:61": "prāyaśastu kusīdānāṃ paradāropajīvinām |",
  "SA08n979:62": "ratābhilāṣo'tyadhiko maithune ca sadā ratiḥ ||26 ||",
  "SA08n979:63": "te tattvakārikā riktāḥ kevalāhāratatparāḥ |",
  "SA08n979:64": "mṛtyukāle samutpanne dahyante svena cetasā ||27 ||",
  "SA08n979:65": "śītoṣṇaṃ ca sahantyete kṣutpipāse tathaiva ca |",
  "SA08n979:66": "gātrāntā ca kriyā kāryā yātrā dharmāya sarvadā ||28 ||",
  "SA08n979:67": "ataḥ kausīdye na matiḥ kāryā",
  "SA08n979:68": "na kausīdye matiṃ kuryāt kuśīle śīlakāmukaḥ |",
  "SA08n979:69": "saṃsāre sīdati nityaṃ na ca duḥkhāt pramucyate ||29 ||",
  "SA08n979:70": "kudīdānvitaḥ lokavañcito bhavati",
  "SA08n979:71": "paribhūya satāṃ madhye kusīdāllokavañcitaḥ |",
  "SA08n979:72": "vañcitaśca bhavatyante śarmaṇo vā vimucyate ||30 ||",
  "SA08n979:73": "dharmeṇa vimuktirbhavati",
  "SA08n979:74": "vīryavān smṛtisaṃlabdha ekāntanirataḥ sadā |",
  "SA08n979:75": "vimuktapāpakaidharmairmokṣaṃ prāpnoti yatnataḥ ||31 ||",
  "SA08n979:76": "kukarmeṣu matiḥ na kāryā",
  "SA08n979:77": "evaṃvidhā duḥkhaparamparā hi,",
  "SA08n979:78": "sattvaḥ kukarmeṣu (matiṃ) na kuryāt |",
  "SA08n979:79": "loke tridoṣānalasampradīpte,",
  "SA08n979:80": "kuryāt parāṃ śāntikṛpā mṛte na ||32 ||",
  "SA08n979:81": " ||iti kausīdyavargo viṃśaḥ ||",
  "SA08n979:82": "cittañca vāk tathā karma saṃyojanantu pāpakam |",
  "SA08n979:83": "naraka-preta-tiryak-kṣut-kausīdyāni vidurdaśa ||",
  "SA08n979:84": " ||iti dvitīyam udānam ||"
}