    "2860:2": "none;text-autospace:",
    "2860:3": "none“> Sarvaśabdabhāvacarcā",
    "2860:4": "normal;mso-pagination:",
    "2860:5": "none;mso-layout-grid-align:",
    "2860:6": "none;text-autospace:none“>",
    "2860:7": "normal;mso-pagination:",
    "2860:8": "none;mso-layout-grid-align:",
    "2860:9": "none;text-autospace:",
    "2860:10": "none“> iha sarvaśabdābhāvasādhane",
    "2860:11": "jñānakāryānupalabdhim eke pramāṇayanti|",
    "2860:12": "normal;mso-pagination:",
    "2860:13": "none;mso-layout-grid-align:",
    "2860:14": "none;text-autospace:none“>",
    "2860:15": "normal;mso-pagination:",
    "2860:16": "none;mso-layout-grid-align:",
    "2860:17": "none;text-autospace:",
    "2860:18": "none“> ekajñānasaṃsargivirahāt kila neha",
    "2860:19": "svabhāvānupalabdher avasaraḥ|",
    "2860:20": "tathā hi trayam avaśyam asyām abhidheyaṃ ghaṭādimatpratikṣepeṇa ,",
    "2860:21": "normal;mso-pagination:",
    "2860:22": "none;mso-layout-grid-align:",
    "2860:23": "none;text-autospace:",
    "2860:24": "none“> viśeṣaṇaṃ svabhāvaḥ phalaṃ ceti|",
    "2860:25": "tatra dṛśyaviṣayaviśeṣaṇavaśāt",
    "2860:26": "piśācāder apratiṣedhaḥ ,",
    "2860:27": "ekajñānasaṃsargivedanasvabhāvatvena",
    "2860:28": "rūpajñānād rasasya|",
    "2860:29": "nāpy abhāvapakṣadoṣānuṣaṅgaḥ|",
    "2860:30": "vyavahāraphalatayā ca pratyakṣasiddhir",
    "2860:31": "upasaṃhitā|",
    "2860:32": "sā ca pratiyogijñānāśraye saty upapadyate| tad eva hi",
    "2860:33": "pratiyogyantarābhāvanāntarīyakatayā tadabhāvavikalpajananasāmarthyāt tatsādhanaṃ",
    "2860:34": "bhavet| tato mūḍhaṃ prati tadātmikā'nupalabdhir abhāvavyavahārasādhanīti",
    "2860:35": "yuktam|",
    "2860:36": "normal;mso-pagination:",
    "2860:37": "none;mso-layout-grid-align:",
    "2860:38": "none;text-autospace:none“>",
    "2860:39": "normal;mso-pagination:",
    "2860:40": "none;mso-layout-grid-align:",
    "2860:41": "none;text-autospace:",
    "2860:42": "none“> na ca sarvaśabdābhāve sādhye kaścid ekajñānasaṃsargī",
    "2860:43": "labhyata iti nātrāvakāśas tasyāḥ| sa tu",
    "2860:44": "śabdarāśir abhimatapradeśe vidyamānas tadā jñānakāryam anārabhyāsituṃ na",
    "2860:45": "samartha iti kāryapratiṣedhe'pi nirviśeṣaṇaiva sattā pratiṣiddhā bhavatīti",
    "2860:46": "bhāvaḥ|",
    "2860:47": "normal;mso-pagination:",
    "2860:48": "none;mso-layout-grid-align:",
    "2860:49": "none;text-autospace:none“>",
    "2860:50": "normal;mso-pagination:",
    "2860:51": "none;mso-layout-grid-align:",
    "2860:52": "none;text-autospace:",
    "2860:53": "none“> atra cintyate :",
    "2860:54": "na tāvat dhvanir ity eva śravaṇam ,",
    "2860:55": "vidhirasyāpi prasaṅgāt|",
    "2860:56": "tasmād indriyapāṭavasahakṛtasyaiva",
    "2860:57": "śabdasya śravaṇajñānajanakatvam|",
    "2860:58": "tac ca śravaṇapāṭavam ekajñānasaṃsargivirahe",
    "2860:59": "duravadhāram|",
    "2860:60": "ata eva pradeśapratyakṣāpekṣayā ghaṭaniṣedhaḥ|",
    "2860:61": "tato hīndriyaguṇaṃ",
    "2860:62": "gaṇayan ghaṭāparādham evānupalabdher avadhārayati|",
    "2860:63": "normal;mso-pagination:",
    "2860:64": "none;mso-layout-grid-align:",
    "2860:65": "none;text-autospace:none“>",
    "2860:66": "normal;mso-pagination:",
    "2860:67": "none;mso-layout-grid-align:",
    "2860:68": "none;text-autospace:none“> ( 1 )",
    "2860:69": "normal;mso-pagination:",
    "2860:70": "none;mso-layout-grid-align:",
    "2860:71": "none;text-autospace:none“>",
    "2860:72": "normal;mso-pagination:",
    "2860:73": "none;mso-layout-grid-align:",
    "2860:74": "none;text-autospace:",
    "2860:75": "none“> na ca manaskāravat svasaṃvedanasiddhiḥ ,",
    "2860:76": "indriyasya jaḍatvāt|",
    "2860:77": "nāpīndriyāntaragamyatvam ,",
    "2860:78": "atīndriyatvāt|",
    "2860:79": "kāryaṃ punar upalabdhir evāsya|",
    "2860:80": "tatsiddhau ca kāryānupalabdher evāsiddhiḥ|",
    "2860:81": "asiddhau siddham anaikāntikatvam| na",
    "2860:82": "hi viṣaye saty apīndriyadoṣāt sambhāvyamāno'nupalambhas tadabhāvaniyato nāma|",
    "2860:83": "normal;mso-pagination:",
    "2860:84": "none;mso-layout-grid-align:",
    "2860:85": "none;text-autospace:none“>",
    "2860:86": "normal;mso-pagination:",
    "2860:87": "none;mso-layout-grid-align:",
    "2860:88": "none;text-autospace:",
    "2860:89": "none“> nābhāva eva śabdasya tajjñānajananayogyas tu",
    "2860:90": "nāstīti brūma iti cet ,",
    "2860:91": "seyaṃ kuvaidyavṛttir",
    "2860:92": "āyātā , prathamaṃ",
    "2860:93": "prāgalbhyagarbham abhimatapratikaraṇam",
    "2860:94": "abhyupagamyopāyabuddhyopanyastasyānupāyasya pareṇa tattvapratipādane kṛte",
    "2860:95": "paścād asādhyatvaghoṣaṇāt|",
    "2860:96": "sarvathā'bhāva eva hi jijñāsite kāryānupalabdhir iyaṃ",
    "2860:97": "sādhanam uktā|",
    "2860:98": "na tu jñānajananayogyatāvirahajijñāsāyām|",
    "2860:99": "tad yadi pramāṇabhraṃśa",
    "2860:100": "eva kathañcij jñātaḥ ,",
    "2860:101": "prameyabhraṃśas tu kimaṅgāṅgīkriyate ?",
    "2860:102": "varaṃ ca pramāṇāntaram eva mṛgyatām|",
    "2860:103": "asādhyataiva tu kasmād avaghuṣyate ?",
    "2860:104": "normal;mso-pagination:",
    "2860:105": "none;mso-layout-grid-align:",
    "2860:106": "none;text-autospace:none“>",
    "2860:107": "normal;mso-pagination:",
    "2860:108": "none;mso-layout-grid-align:",
    "2860:109": "none;text-autospace:",
    "2860:110": "none“> na hi śakyam avadhirasyāśṛṇvataḥ",
    "2860:111": "sannihitabheryādiravābhāvaḥ pratikṣeptum ,",
    "2860:112": "vidhirāvadhirayor aviśeṣaprasaṅgāt|",
    "2860:113": "normal;mso-pagination:",
    "2860:114": "none;mso-layout-grid-align:",
    "2860:115": "none;text-autospace:none“>",
    "2860:116": "normal;mso-pagination:",
    "2860:117": "none;mso-layout-grid-align:",
    "2860:118": "none;text-autospace:",
    "2860:119": "none“> sati śrutikṛto'sti viśeṣaḥ prāk paścād iti cet , naivam|",
    "2860:120": "yadi hi prāgavasthātaḥ śravaṇaśaktyā",
    "2860:121": "nirviśeṣa eṣaḥ ,",
    "2860:122": "katham aśrutiḥ sati śabde ?",
    "2860:123": "anyathā prāg api na syāt|",
    "2860:124": "atha visadṛśāvastho'pi",
    "2860:125": "sambhāvyate|",
    "2860:126": "śrutāv api na śrāddhātavyam ,",
    "2860:127": "asya viplavasya sambhāvyamānatvāt|",
    "2860:128": "tatrāśravaṇam",
    "2860:129": "abhūtaśravaṇaṃ veti na viśeṣaḥ|",
    "2860:130": "ante kutaḥ śaktiviparyaya iti cet ,",
    "2860:131": "madhye kutas tadabhāva iti samānam|",
    "2860:132": "normal;mso-pagination:",
    "2860:133": "none;mso-layout-grid-align:",
    "2860:134": "none;text-autospace:none“>",
    "2860:135": "normal;mso-pagination:",
    "2860:136": "none;mso-layout-grid-align:",
    "2860:137": "none;text-autospace:none“> ( 2 )",
    "2860:138": "normal;mso-pagination:",
    "2860:139": "none;mso-layout-grid-align:",
    "2860:140": "none;text-autospace:",
    "2860:141": "none“> tasmād apakṣa evāyaṃ sann api śabdas tadā na",
    "2860:142": "śruta iti| kevalaṃ kim atra pramāṇam astv iti cintāyāṃ kāryānupalabdhir",
    "2860:143": "anaikāntikīty uktam eva ,",
    "2860:144": "śravaṇapāṭavasya",
    "2860:145": "duravadhāratvād iti|",
    "2860:146": "normal;mso-pagination:",
    "2860:147": "none;mso-layout-grid-align:",
    "2860:148": "none;text-autospace:none“>",
    "2860:149": "normal;mso-pagination:",
    "2860:150": "none;mso-layout-grid-align:",
    "2860:151": "none;text-autospace:",
    "2860:152": "none“> nanu katham etad duravadhāraṃ dṛṣṭaśravaṇapāṭavasmaraṇabalavataḥ",
    "2860:153": "śrotuṃ pravṛttasya ,",
    "2860:154": "kṣaṇikatve'pi hi visadṛśasahakāripratyayāntaravirahe",
    "2860:155": "visadṛśadaśāsambhavābhāvāt ?",
    "2860:156": "indriyavikārakāriṇo hi pratyayā dhātukṣobhaprahārādayo nirṇītaśaktayaḥ",
    "2860:157": "svasantāne santānavyākulībhāvahetavaḥ sūpalakṣā eva|",
    "2860:158": "anupalakṣitās tu",
    "2860:159": "svaprabhavabhedaśaṅkāṃ katham iva kṣamante ?",
    "2860:160": "sūkṣmaṃ tu prabhāvavato'dhiṣṭhā nādivikārakāraṇaṃ",
    "2860:161": "śaṅkamānasya śravaṇe'pi ka āśvāsaḥ ?",
    "2860:162": "tasmād anupalakṣyakāraṇārabdhadiṅmohalakṣanendriyabhrāntidarśane'pi",
    "2860:163": "prasiddhakāraṇānupalakṣaṇān nendriyāṇām atādavasthyavyavasthā|",
    "2860:164": "yathā'nyathā",
    "2860:165": "tatpratyayānāṃ bhramatvaprasaṅgāt ,",
    "2860:166": "tathā'dyāpi kiṃ na gaṇyate ?",
    "2860:167": "mā bhūt sarvasaṃvṛtivilopaḥ|",
    "2860:168": "normal;mso-pagination:",
    "2860:169": "none;mso-layout-grid-align:",
    "2860:170": "none;text-autospace:none“>",
    "2860:171": "normal;mso-pagination:",
    "2860:172": "none;mso-layout-grid-align:",
    "2860:173": "none;text-autospace:",
    "2860:174": "none“> abhyāsadaśāsattisamāśrayas tu samānaḥ| na hi",
    "2860:175": "vadhiravarasyābhiropārūḍhaśravaṇabalasyāpy aśravane'bhāvaniścayaṃ brūmaḥ ,",
    "2860:176": "balaniścayasyaivābhāvāt|",
    "2860:177": "tadvad anyasyāpy",
    "2860:178": "akalitabalasya|",
    "2860:179": "atyantābhyāse hi sakalarajanīsuptaprabuddhānām adarśane'pi",
    "2860:180": "tadavasthāsaṃvedinām aviparītavyavahāravṛttidarśanāt kaḥ prastāvo jāgrataḥ",
    "2860:181": "svātmany anyathātvaśaṅkāyāḥ ?",
    "2860:182": "normal;mso-pagination:",
    "2860:183": "none;mso-layout-grid-align:",
    "2860:184": "none;text-autospace:none“>",
    "2860:185": "normal;mso-pagination:",
    "2860:186": "none;mso-layout-grid-align:",
    "2860:187": "none;text-autospace:",
    "2860:188": "none“> tasmād atādavasthyasya tadvyavasthāyā vā niṣedhaḥ ,",
    "2860:189": "prasiddhakāraṇābhāvāt tadupalakṣaṇābhāvād vā|",
    "2860:190": "normal;mso-pagination:",
    "2860:191": "none;mso-layout-grid-align:",
    "2860:192": "none;text-autospace:none“>",
    "2860:193": "normal;mso-pagination:",
    "2860:194": "none;mso-layout-grid-align:",
    "2860:195": "none;text-autospace:",
    "2860:196": "none“> yadi darśanaśravaṇādāv abhyāsadaśāpekṣayā'dhyakṣatvanibandhanaṃ",
    "2860:197": "tādavasthyam icchatā ,",
    "2860:198": "saṃvṛtivyavasthitenendriyatādavasth-",
    "2860:199": "normal;mso-pagination:",
    "2860:200": "none;mso-layout-grid-align:",
    "2860:201": "none;text-autospace:none“>",
    "2860:202": "normal;mso-pagination:",
    "2860:203": "none;mso-layout-grid-align:",
    "2860:204": "none;text-autospace:none“> ( 3 )",
    "2860:205": "normal;mso-pagination:",
    "2860:206": "none;mso-layout-grid-align:",
    "2860:207": "none;text-autospace:",
    "2860:208": "none“> yaṃ sāmagrīpratibaddhabuddhitādavasthyaṃ vā",
    "2860:209": "sādhāraṇaśaktyapekṣayā svasaṃvedanam eva vā śaraṇam āsthīyate|",
    "2860:210": "tad evāśravaṇadaśāyām",
    "2860:211": "apīti katham anekāntaḥ śabdābhāve ?",
    "2860:212": "normal;mso-pagination:",
    "2860:213": "none;mso-layout-grid-align:",
    "2860:214": "none;text-autospace:none“>",
    "2860:215": "normal;mso-pagination:",
    "2860:216": "none;mso-layout-grid-align:",
    "2860:217": "none;text-autospace:",
    "2860:218": "none“> nanu jñānātmany eva svasaṃvedanam iti cet , na|",
    "2860:219": "normal;mso-pagination:",
    "2860:220": "none;mso-layout-grid-align:",
    "2860:221": "none;text-autospace:",
    "2860:222": "none“> ekādhimokṣaviṣayeṣv ekakāryopayogiṣu|",
    "2860:223": "normal;mso-pagination:",
    "2860:224": "none;mso-layout-grid-align:",
    "2860:225": "none;text-autospace:",
    "2860:226": "none“> ekadhīḥ sarvaviṣayā sthitā nirbhāgavartiṣu",
    "2860:227": "||1||",
    "2860:228": "normal;mso-pagination:",
    "2860:229": "none;mso-layout-grid-align:",
    "2860:230": "none;text-autospace:none“>",
    "2860:231": "normal;mso-pagination:",
    "2860:232": "none;mso-layout-grid-align:",
    "2860:233": "none;text-autospace:",
    "2860:234": "none“> pañcaskandheṣv apy aham ity eko'dhimokṣaḥ|",
    "2860:235": "bhāṣaṇādāv",
    "2860:236": "ekasminn arthe parasparopādeye copayogaḥ|",
    "2860:237": "ghaṭādisañjñake tu rūparasādau",
    "2860:238": "prasiddho'yam nyāyaḥ ,",
    "2860:239": "anyathā vyavahārāyogāt|",
    "2860:240": "normal;mso-pagination:",
    "2860:241": "none;mso-layout-grid-align:",
    "2860:242": "none;text-autospace:none“>",
    "2860:243": "normal;mso-pagination:",
    "2860:244": "none;mso-layout-grid-align:",
    "2860:245": "none;text-autospace:",
    "2860:246": "none“> nanu na śarīpratyakṣaṃ buddhim anveti| evam",
    "2860:247": "etat prātisvikarūpāpekṣayā rūparasādivad eva|",
    "2860:248": "sāmānyena tu gṛhītvaikadhīviṣayatvam",
    "2860:249": "ucyate , yāvan na nirbandho",
    "2860:250": "vivecane| vivecane tu pṛthakpramāṇam uktam|",
    "2860:251": "tena pratyakṣaś caitro na ca",
    "2860:252": "buddhir adhyakṣeti dvitayam aviruddham|",
    "2860:253": "ata eva tadavastho'ham iti vikalpo'pi",
    "2860:254": "saṃvedanānusārī sarvaviṣaya eva|",
    "2860:255": "normal;mso-pagination:",
    "2860:256": "none;mso-layout-grid-align:",
    "2860:257": "none;text-autospace:none“>",
    "2860:258": "normal;mso-pagination:",
    "2860:259": "none;mso-layout-grid-align:",
    "2860:260": "none;text-autospace:",
    "2860:261": "none“> bhrāntir iyam iti cet ,",
    "2860:262": "na ,",
    "2860:263": "bādhakābhāvād bhrāntyasiddheḥ| tasmāt",
    "2860:264": "pūrvapratītaśrotraśaktes tadavasthāniścayasambhavād aśrutiḥ śabdasyaivāparādhād",
    "2860:265": "iti jñānābhāvenāpi tadabhāvasiddhir aikāntikīti na prakṛtavyāghātaḥ| iyaty eva",
    "2860:266": "tarhi svabhāvānupalabdher lakṣaṇasāmagrīti kāryānupalabdhisañjñākaraṇe ko'rthaḥ ,",
    "2860:267": "pratyayāntarasākalyaṃ svabhāvaviśeṣaṃ cāpannasyaiva",
    "2860:268": "śabdasyānupalabdhā niṣedhāt ?",
    "2860:269": "normal;mso-pagination:",
    "2860:270": "none;mso-layout-grid-align:",
    "2860:271": "none;text-autospace:none“>",
    "2860:272": "normal;mso-pagination:",
    "2860:273": "none;mso-layout-grid-align:",
    "2860:274": "none;text-autospace:none“> ( 4 )",
    "2860:275": "normal;mso-pagination:",
    "2860:276": "none;mso-layout-grid-align:",
    "2860:277": "none;text-autospace:none“>",
    "2860:278": "normal;mso-pagination:",
    "2860:279": "none;mso-layout-grid-align:",
    "2860:280": "none;text-autospace:",
    "2860:281": "none“> tathā'py anyasañjñāyāṃ ghaṭaniṣedhe'pi ko niṣeddhā ?",
    "2860:282": "kevalaṃ ghaṭavat śabdasyāpi dṛśyānupalabdhyā'pi",
    "2860:283": "niṣedhaḥ sādhyo jāta ity ucyate|",
    "2860:284": "normal;mso-pagination:",
    "2860:285": "none;mso-layout-grid-align:",
    "2860:286": "none;text-autospace:none“>",
    "2860:287": "normal;mso-pagination:",
    "2860:288": "none;mso-layout-grid-align:",
    "2860:289": "none;text-autospace:",
    "2860:290": "none“> tatraikajñānasaṃsargisambhavād yuktas tayā niṣedha",
    "2860:291": "iti cet , tatraiva tāvad ekajñānasaṃsargiṇaḥ kim apekṣayā ?",
    "2860:292": "rūpadarśane hi rasasya viprakṛṣṭadeśatayā'nupalabdhilakṣaṇaprāptatvād",
    "2860:293": "evāpratiṣedhaḥ ,",
    "2860:294": "prāpyakāritvād ghrāṇarasanasparśanānām|",
    "2860:295": "normal;mso-pagination:",
    "2860:296": "none;mso-layout-grid-align:",
    "2860:297": "none;text-autospace:none“>",
    "2860:298": "normal;mso-pagination:",
    "2860:299": "none;mso-layout-grid-align:",
    "2860:300": "none;text-autospace:",
    "2860:301": "none“> naivam ,",
    "2860:302": "indriyātiriktasyālokasya tatrāpekṣyatvāt| sa",
    "2860:303": "hi bahiḥsula bhakāraṇidhīnopajanāpajanadharmako na svātmatādavasthyasādhya iti",
    "2860:304": "tadartham ekajñānasaṃsargo'pekṣyamāṇa indriyasādguṇyajñāne'pi sahāyībhaviṣyati|",
    "2860:305": "normal;mso-pagination:",
    "2860:306": "none;mso-layout-grid-align:",
    "2860:307": "none;text-autospace:none“>",
    "2860:308": "normal;mso-pagination:",
    "2860:309": "none;mso-layout-grid-align:",
    "2860:310": "none;text-autospace:",
    "2860:311": "none“> evam yatrālokanirapekṣaiva grahaṇaśaktiḥ ,",
    "2860:312": "tatra na kiñcid ekajñānasaṃsargyapekṣayeti",
    "2860:313": "siddham| tac ca nāma kvacit sādhane'pekṣyate ,",
    "2860:314": "yadantareṇa virodhāsiddhisandeheṣv anyatamadoṣāsattiḥ|",
    "2860:315": "na ca dvividhopalabdhiyogyatāpannasya kvacid anupalabdhyā niṣedhe sā'sti ,",
    "2860:316": "yena saṃsargī niyatam apekṣyeta|",
    "2860:317": "yatrāpy ayam",
    "2860:318": "apekṣyate , tatrāpy",
    "2860:319": "normal;mso-pagination:",
    "2860:320": "none;mso-layout-grid-align:",
    "2860:321": "none;text-autospace:",
    "2860:322": "none“> ālokāpekṣapratipattino vastunaḥ pratiṣedhe viśeṣaṇāsiddhiparihārārtham",
    "2860:323": "eva| na caitāvatā sarvatra tadapekṣā|",
    "2860:324": "na hi vināṣaṃ praty anapekṣā",
    "2860:325": "vyāptisādhanī sarvatra kṣaṇabhaṅgasādhane'pi svabhāvahetāv apekṣyate|",
    "2860:326": "normal;mso-pagination:",
    "2860:327": "none;mso-layout-grid-align:",
    "2860:328": "none;text-autospace:none“>",
    "2860:329": "normal;mso-pagination:",
    "2860:330": "none;mso-layout-grid-align:",
    "2860:331": "none;text-autospace:",
    "2860:332": "none“> yadi cāyam apekṣya eva kimaṅga dṛśyaviśeṣaṇena , kenacid",
    "2860:333": "ekajñānasaṃsargino dṛśyatvāvyabhicārāt ?",
    "2860:334": "na hi piśācasya kenacid eka jñānasaṃsargaḥ|",
    "2860:335": "normal;mso-pagination:",
    "2860:336": "none;mso-layout-grid-align:",
    "2860:337": "none;text-autospace:none“>",
    "2860:338": "normal;mso-pagination:",
    "2860:339": "none;mso-layout-grid-align:",
    "2860:340": "none;text-autospace:",
    "2860:341": "none“> eka evārtha ubhayathāpīti",
    "2860:342": "naikaprayoge'nyaprayojanacarceti cet ,",
    "2860:343": "na ,",
    "2860:344": "sāmānyaviśeṣabhāvena bhedasyāvyaktatvāt| saṃsargo",
    "2860:345": "hi na viśe-",
    "2860:346": "normal;mso-pagination:",
    "2860:347": "none;mso-layout-grid-align:",
    "2860:348": "none;text-autospace:none“> ( 5 )",
    "2860:349": "normal;mso-pagination:",
    "2860:350": "none;mso-layout-grid-align:",
    "2860:351": "none;text-autospace:none“>",
    "2860:352": "normal;mso-pagination:",
    "2860:353": "none;mso-layout-grid-align:",
    "2860:354": "none;text-autospace:",
    "2860:355": "none“> ṣaṇaṃ vyabhicarati|",
    "2860:356": "viśeṣaṇamātraṃ tu taṃ",
    "2860:357": "vyabhicapaty eva|",
    "2860:358": "ata eva viśeṣaṇasiddhaye saṃsarga upanīyate|",
    "2860:359": "na tu viśeṣaṇaṃ",
    "2860:360": "saṃsargākṛṣṭaye prabhavati ,",
    "2860:361": "śabde'pi prasaṅgāt|",
    "2860:362": "tathā ca pakṣakṣaya iti kaḥ śramasyārthaḥ ?",
    "2860:363": "tasmād ekajñānasaṃsargo nāma prakṛtodāharaṇāpekṣayaivodghuṣyate ,",
    "2860:364": "na svabhāvānupalabdhau sarvatrāpekṣyatvena|",
    "2860:365": "normal;mso-pagination:",
    "2860:366": "none;mso-layout-grid-align:",
    "2860:367": "none;text-autospace:",
    "2860:368": "none“> prastute hi kalasapratiṣedhe sā dig astu saviśeṣaṇasiddhyai|",
    "2860:369": "nopalabdham upalabhyam itīyallakṣaṇaṃ khalu nijānupalabdheḥ|",
    "2860:370": "tathā ca lakṣaṇe",
    "2860:371": "prayoge copalabdhilakṣaṇaprāptānupalabdhimātropanyāsaḥ| śāstre",
    "2860:372": "viparyayabādhopadarśane ca pratyayāntarasannidhau svabhāvaviśeṣavataḥ",
    "2860:373": "sattve'nupalabdher asambhavaḥ khyāpyate|",
    "2860:374": "anyathā prayojakam aṃśaṃ saṃsargam eva",
    "2860:375": "sarvatra darśayet ,",
    "2860:376": "viśeṣaṇavat|",
    "2860:377": "normal;mso-pagination:",
    "2860:378": "none;mso-layout-grid-align:",
    "2860:379": "none;text-autospace:none“>",
    "2860:380": "normal;mso-pagination:",
    "2860:381": "none;mso-layout-grid-align:",
    "2860:382": "none;text-autospace:",
    "2860:383": "none“> tādātmyaṃ tu dṛśyatvam abhyupagamyaiva niṣidhyata",
    "2860:384": "iti viśeṣaṇasyānuktimātram ,",
    "2860:385": "na punar aprayojakatvaṃ vyāpter iva viduṣi ,",
    "2860:386": "anvayoktiviśeṣe vā vyatirekasya|",
    "2860:387": "tasmān nyāyanāthasyāpi nāvaśayam ekajñānasaṃsargivyapekṣābhiprāyaḥ",
    "2860:388": "svabhāvānupalabdhau|",
    "2860:389": "normal;mso-pagination:",
    "2860:390": "none;mso-layout-grid-align:",
    "2860:391": "none;text-autospace:",
    "2860:392": "none“> api caivaṃ kāryānupalabdhāv eva sarvasaṅgraham",
    "2860:393": "ācakṣīta , svabhāvānupalabdher api",
    "2860:394": "tadekadeśatvāt|",
    "2860:395": "sarvapramāṇasaṅgrahavyavasthāṃ ca kāryānumāne kuryāt ,",
    "2860:396": "svasaṃvedanād anyatra|",
    "2860:397": "normal;mso-pagination:",
    "2860:398": "none;mso-layout-grid-align:",
    "2860:399": "none;text-autospace:none“>",
    "2860:400": "normal;mso-pagination:",
    "2860:401": "none;mso-layout-grid-align:",
    "2860:402": "none;text-autospace:",
    "2860:403": "none“> tasmād indriyajñānaviṣaye na",
    "2860:404": "kāryānumānavyavasthā yathā tathā tadagṛhīta ity eva kutaḥ",
    "2860:405": "kāryānupalabdhivyavasthā'pi",
    "2860:406": "śāstrakārasya ?",
    "2860:407": "yathā hi pratyakṣavyavasthāvilopabhayam",
    "2860:408": "ekatra , tathā'nyatra",
    "2860:409": "svabhāvānupalambhasya|",
    "2860:410": "yathā vā'pratyakṣe kāryaṃ liṅgam ,",
    "2860:411": "tathā'pratyakṣayogya eva tadanupalabdhir iti",
    "2860:412": "samānam|",
    "2860:413": "normal;mso-pagination:",
    "2860:414": "none;mso-layout-grid-align:",
    "2860:415": "none;text-autospace:",
    "2860:416": "none“> yathā vā'yam eva bhagavān jñāne",
    "2860:417": "jñānāntarābhāvam api dṛśyānupalabdhyā vyavahārayati|",
    "2860:418": "yadāha dṛśyātmano vā",
    "2860:419": "vikalpasya darśa-",
    "2860:420": "normal;mso-pagination:",
    "2860:421": "none;mso-layout-grid-align:",
    "2860:422": "none;text-autospace:none“>",
    "2860:423": "normal;mso-pagination:",
    "2860:424": "none;mso-layout-grid-align:",
    "2860:425": "none;text-autospace:none“> ( 6 )",
    "2860:426": "normal;mso-pagination:",
    "2860:427": "none;mso-layout-grid-align:",
    "2860:428": "none;text-autospace:none“>",
    "2860:429": "normal;mso-pagination:",
    "2860:430": "none;mso-layout-grid-align:",
    "2860:431": "none;text-autospace:",
    "2860:432": "none“> ne'dṛṣṭir vikalpakalpanām indriyajñāne",
    "2860:433": "pratihanti iti ,",
    "2860:434": "tadā ka ekajñānasaṃsargī ?",
    "2860:435": "kiṃ caivamabhyupagame kāryānupalabdher apy",
    "2860:436": "asiddhir iti prakṛtamatahānir eva|",
    "2860:437": "na hi jñānakāryasyābhāvaḥ kāryānupalabdher",
    "2860:438": "eva boddhavyo'navasthāprasaṅgāt|",
    "2860:439": "normal;mso-pagination:",
    "2860:440": "none;mso-layout-grid-align:",
    "2860:441": "none;text-autospace:none“>",
    "2860:442": "normal;mso-pagination:",
    "2860:443": "none;mso-layout-grid-align:",
    "2860:444": "none;text-autospace:",
    "2860:445": "none“> svasaṃvedanaṃ",
    "2860:446": "caikākāraniyatam anyābhāvaniścayam ākṣipaty eva|",
    "2860:447": "kevalaṃ vimataṃ prati yadi syāj",
    "2860:448": "jñānāntaram ,",
    "2860:449": "anubhūyeteti dṛśyānupalabdhir",
    "2860:450": "eva śaraṇam ,",
    "2860:451": "vyavahāre bāhyavat|",
    "2860:452": "normal;mso-pagination:",
    "2860:453": "none;mso-layout-grid-align:",
    "2860:454": "none;text-autospace:none“>",
    "2860:455": "normal;mso-pagination:",
    "2860:456": "none;mso-layout-grid-align:",
    "2860:457": "none;text-autospace:",
    "2860:458": "none“> viśeṣaṇānuccāraṇaṃ tu syāt|",
    "2860:459": "na tv anyā gatiḥ|",
    "2860:460": "saṃsargāpekṣāyāṃ ca sā'pi nāstīti sandigdhāsiddho hetuḥ|",
    "2860:461": "tasmād anupalabdher",
    "2860:462": "ekajñānasaṃsargāpekṣāniyamam anulaṅghya vartitum aśakyam|",
    "2860:463": "normal;mso-pagination:",
    "2860:464": "none;mso-layout-grid-align:",
    "2860:465": "none;text-autospace:none“>",
    "2860:466": "normal;mso-pagination:",
    "2860:467": "none;mso-layout-grid-align:",
    "2860:468": "none;text-autospace:",
    "2860:469": "none“> bahirapekṣayā niyama eveti cet ,",
    "2860:470": "na ,",
    "2860:471": "tatrāpi nibandhanābhāvāt|",
    "2860:472": "yad dhi sāmarthyam",
    "2860:473": "antas tadatikrame ,",
    "2860:474": "tasya bahir api",
    "2860:475": "lābhasambhave kiṃ na sadṛśī sthitiḥ ?",
    "2860:476": "vicitro hi viṣayasvabhāvaḥ|",
    "2860:477": "tatra svātmā",
    "2860:478": "tāvat pratyakṣībhāve yogyatāmātram apekṣate ,",
    "2860:479": "śabdagandharasasparśatamisrālokās tu",
    "2860:480": "manaskārātiriktam indriyam ,",
    "2860:481": "ghaṭādisanniveśinas tu rūpaviśeṣāḥ prakāśam api prāyaśaḥ| tathaiṣāṃ",
    "2860:482": "vidhāv upalabdhir iva svabhāvasyānupalabdhir api niṣedhe kiṃ na bhinnām eva",
    "2860:483": "sāmagrīm apekṣeta ?",
    "2860:484": "normal;mso-pagination:",
    "2860:485": "none;mso-layout-grid-align:",
    "2860:486": "none;text-autospace:",
    "2860:487": "none“> tatrādye yathā nendriyatādavasthyenopayogaḥ ,",
    "2860:488": "tathā madhyamīyeṣv api naikajñānasaṃsargiṇā|",
    "2860:489": "anyātiriktāpekṣiṇas tadapekṣā yujyante",
    "2860:490": "normal;mso-pagination:",
    "2860:491": "none;mso-layout-grid-align:",
    "2860:492": "none;text-autospace:none“>",
    "2860:493": "normal;mso-pagination:",
    "2860:494": "none;mso-layout-grid-align:",
    "2860:495": "none;text-autospace:none“> ( 7 )",
    "2860:496": "normal;mso-pagination:",
    "2860:497": "none;mso-layout-grid-align:",
    "2860:498": "none;text-autospace:none“>",
    "2860:499": "normal;mso-pagination:",
    "2860:500": "none;mso-layout-grid-align:",
    "2860:501": "none;text-autospace:none“> 'pi|",
    "2860:502": "tato yathā yadi buddhiḥ syād ,",
    "2860:503": "upalabhyetaiva kim indriyatādavasthyāpekṣayeti",
    "2860:504": "sāmarthyam ,",
    "2860:505": "tathā yadi syād rasādiḥ ,",
    "2860:506": "tadavasthendriyeṇa mayopalabhyetaiva kim",
    "2860:507": "ekajñānasaṃsargiṇeti śakyam eva|",
    "2860:508": "tasmād bahir api niyamasambhāvanā'tidūraiva|",
    "2860:509": "abhyupagame vā jñāne'py apekṣeta|",
    "2860:510": "normal;mso-pagination:",
    "2860:511": "none;mso-layout-grid-align:",
    "2860:512": "none;text-autospace:none“>",
    "2860:513": "normal;mso-pagination:",
    "2860:514": "none;mso-layout-grid-align:",
    "2860:515": "none;text-autospace:",
    "2860:516": "none“> tatrāpi saṃvedanaikapratyakṣāpekṣaikajñānasaṃsargo'stīti",
    "2860:517": "cet , nanu na saṃvedanaṃ",
    "2860:518": "nāmaikaṃ pratyakṣam asti ,",
    "2860:519": "dharmamātrasya tasya",
    "2860:520": "pratisvaṃ bhedāt|",
    "2860:521": "sāmānyam āśrityaikajñānasañjñaya tu parituṣṭau",
    "2860:522": "bhinnendriyagrāhyayor api svasaṃpvedanendriyajñānaviṣayayor api vā prasaṅgaḥ|",
    "2860:523": "normal;mso-pagination:",
    "2860:524": "none;mso-layout-grid-align:",
    "2860:525": "none;text-autospace:none“>",
    "2860:526": "normal;mso-pagination:",
    "2860:527": "none;mso-layout-grid-align:",
    "2860:528": "none;text-autospace:",
    "2860:529": "none“> yayoḥ sator anyonyapratyakṣāvyabhicāraḥ ,",
    "2860:530": "tatreyaṃ vyavastheti cet ,",
    "2860:531": "rūpayor api nāyaṃ niyamaḥ ,",
    "2860:532": "pradeśapiśācayor adarśanāt|",
    "2860:533": "viśiṣṭayor asty",
    "2860:534": "eva| na ca sāmānyāparādho viśeṣam āskandatīti cet ,",
    "2860:535": "evam api śabdākāśayoḥ śabdamanaskārayor vā",
    "2860:536": "prasaṅgaḥ| na hy ākāśapratyakṣaṃ manaskārasaṃvedanapratyakṣaṃ vā sattve",
    "2860:537": "śabdasya pratyakṣaṃ vyabhicarati|",
    "2860:538": "vyabhicāre punaḥ kāryānupalabdher anekāntaprasaṅgaḥ|",
    "2860:539": "tasmād avyāpakam ekajñānāpekṣaṇam|",
    "2860:540": "anyasyāpi ca sulabham ity alaṃ vimatyā|",
    "2860:541": "normal;mso-pagination:",
    "2860:542": "none;mso-layout-grid-align:",
    "2860:543": "none;text-autospace:none“>",
    "2860:544": "normal;mso-pagination:",
    "2860:545": "none;mso-layout-grid-align:",
    "2860:546": "none;text-autospace:",
    "2860:547": "none“> api cāyaṃ cittayor ekajñānasaṃsargo'pūrva eva ,",
    "2860:548": "mukhyasyābhāvāt ,",
    "2860:549": "gauṇasya caikāyatanasaṅgrahābhāvāt|",
    "2860:550": "normal;mso-pagination:",
    "2860:551": "none;mso-layout-grid-align:",
    "2860:552": "none;text-autospace:none“>",
    "2860:553": "normal;mso-pagination:",
    "2860:554": "none;mso-layout-grid-align:",
    "2860:555": "none;text-autospace:",
    "2860:556": "none“> upalakṣaṇam ekāyatanasaṅgraha iti cet ,",
    "2860:557": "ekajñānasaṃsarga eva kiṃ nopalakṣaṇam",
    "2860:558": "ākhyāyate ? prakṛtaghaṭodāharaṇāpekṣayā",
    "2860:559": "tu dvayam apy etad uktam ity anabhiniveśaḥ|",
    "2860:560": "yathā hy ekāyatanasaṅgraheṇa",
    "2860:561": "normal;mso-pagination:",
    "2860:562": "none;mso-layout-grid-align:",
    "2860:563": "none;text-autospace:",
    "2860:564": "none“> anyonyapratyakṣāvyabhicāra upalakṣyate ,",
    "2860:565": "tathaikajñānasaṃsargeṇāpi pratiyogimātrāpekṣaiveti",
    "2860:566": "yujyate|",
    "2860:567": "normal;mso-pagination:",
    "2860:568": "none;mso-layout-grid-align:",
    "2860:569": "none;text-autospace:none“>",
    "2860:570": "normal;mso-pagination:",
    "2860:571": "none;mso-layout-grid-align:",
    "2860:572": "none;text-autospace:none“> ( 8 )",
    "2860:573": "normal;mso-pagination:",
    "2860:574": "none;mso-layout-grid-align:",
    "2860:575": "none;text-autospace:",
    "2860:576": "none“> kaś ca kasya pratiyogī ?",
    "2860:577": "yayor ekākāniyataṃ pratyakṣam",
    "2860:578": "itarābhāvaniścayam upapādayituṃ śaknotīti|",
    "2860:579": "kayoś caivamanupalabdhiḥ ?",
    "2860:580": "yayor ekapratyakṣam aparapratyakṣāvyabhicāri|",
    "2860:581": "tayor hi sator naikarūpaniyatā pratipattiḥ ,",
    "2860:582": "asambhavāt|",
    "2860:583": "tatas tāv aviśiṣṭakāladeśadaśāsantānāpekṣaya'nyonyasya",
    "2860:584": "pratiyoginau vyavasthāpyete|",
    "2860:585": "sadṛśaḥ saṃvitilābhalakṣaṇo'yogas tayor iti kṛtvā|",
    "2860:586": "ata eva tayor ekākāraniyataṃ vedanam anyasya pratiṣedhavikalpam upapādayituṃ",
    "2860:587": "śaknotīti tādṛśām abhāvaḥ pratyakṣasiddho'bhidhīyate|",
    "2860:588": "tam eva niścayaṃ mūḍhaṃ",
    "2860:589": "prati pratiyogyupalambhasvabhāvānupalabdhir upalabdhiyogyatā yugayoginaḥ",
    "2860:590": "santanvantī vyāhāravyavahārāv api sādhayatīti tāvataivetaramatapratikṣepeṇa",
    "2860:591": "svabhāvaphalayor api pariniṣṭhāsiddhau kim ekendriyagrāhyatāpekṣopagraheṇa ?",
    "2860:592": "normal;mso-pagination:",
    "2860:593": "none;mso-layout-grid-align:",
    "2860:594": "none;text-autospace:none“>",
    "2860:595": "normal;mso-pagination:",
    "2860:596": "none;mso-layout-grid-align:",
    "2860:597": "none;text-autospace:",
    "2860:598": "none“> ayaṃ hi pratiyoga ekenānekena vendriyeṇa",
    "2860:599": "grāhyayor arthayor jñānayor jñānārthayor vā sādhāraṇo'bhāvasādhane ca",
    "2860:600": "nirapavāda iti kas tadanurodhaḥ ?",
    "2860:601": "yathā hi bhūtalakalasayor jñānayor vaikarūpavedanam anyapratyakṣāvyabhicāritayā",
    "2860:602": "tadabhāvaniścayotpādane paryāptam , tathā",
    "2860:603": "pānakapānakarmaṇi dvayam upalabdhavatas tādavasthyasaṃvedinaḥ pradīpakavalane",
    "2860:604": "sparśamātropalabdhī rasābhāvaniścayajanane|",
    "2860:605": "normal;mso-pagination:",
    "2860:606": "none;mso-layout-grid-align:",
    "2860:607": "none;text-autospace:none“>",
    "2860:608": "normal;mso-pagination:",
    "2860:609": "none;mso-layout-grid-align:",
    "2860:610": "none;text-autospace:none“> ( 9 )",
    "2860:611": "normal;mso-pagination:",
    "2860:612": "none;mso-layout-grid-align:",
    "2860:613": "none;text-autospace:none“>",
    "2860:614": "normal;mso-pagination:",
    "2860:615": "none;mso-layout-grid-align:",
    "2860:616": "none;text-autospace:",
    "2860:617": "none“> svavikalpākāramātrasaṃvedanaṃ vā",
    "2860:618": "sannihitasparśābhāvāvasāya sādhane śaknoty eva|",
    "2860:619": "na hi tadvikalpavedanaṃ tadā",
    "2860:620": "sataḥ sparśasya pratyakṣaṃ vyabhicarati|",
    "2860:621": "normal;mso-pagination:",
    "2860:622": "none;mso-layout-grid-align:",
    "2860:623": "none;text-autospace:none“>",
    "2860:624": "normal;mso-pagination:",
    "2860:625": "none;mso-layout-grid-align:",
    "2860:626": "none;text-autospace:",
    "2860:627": "none“> na cānyonyapratyakṣāvyabhicārād anyad anyatrāpi",
    "2860:628": "dvitīyābhāvaniścayotpādanasāmarthyaṃ nāma|",
    "2860:629": "nāpy abhāvaniścayotpādanasāmarthyād",
    "2860:630": "arthāntaram abhāvapratyakṣīkaraṇaṃ nāma|",
    "2860:631": "na hy asau vigrahavān ,",
    "2860:632": "yataḥ sākṣātkartavyaḥ|",
    "2860:633": "normal;mso-pagination:",
    "2860:634": "none;mso-layout-grid-align:",
    "2860:635": "none;text-autospace:none“>",
    "2860:636": "normal;mso-pagination:",
    "2860:637": "none;mso-layout-grid-align:",
    "2860:638": "none;text-autospace:",
    "2860:639": "none“> yadā ca paryudāsena pratiyogy evābhāvaḥ ,",
    "2860:640": "tadā tv asya mukhyaiva pratyakṣasiddhir iti",
    "2860:641": "yuktaṃ sarvatra vyavahāraphalatvam|",
    "2860:642": "na cāyaṃ pratiyogaḥ svabhāvādiviprakarṣiṇāṃ",
    "2860:643": "kenacid asti ,",
    "2860:644": "yena kasyacit pratyakṣaṃ",
    "2860:645": "tadabhāvavibhāvanāya prabhavet|",
    "2860:646": "na caivaṃ nivṛttimātram anupalabdhir uktā",
    "2860:647": "bhavati|",
    "2860:648": "normal;mso-pagination:",
    "2860:649": "none;mso-layout-grid-align:",
    "2860:650": "none;text-autospace:none“>",
    "2860:651": "normal;mso-pagination:",
    "2860:652": "none;mso-layout-grid-align:",
    "2860:653": "none;text-autospace:",
    "2860:654": "none“> bhaṭṭas tu paryudāsapakṣe'pi yathoktaṃ",
    "2860:655": "pratiyoginam anapekṣyānyamātrasyopalabdhim anupalabdhiṃ pramāṇayatīti tanmate",
    "2860:656": "yuktaḥ piśācādipratikṣepaḥ|",
    "2860:657": "rūpadarśinas tu rasas taddeśaviprakṛṣṭa eva| na",
    "2860:658": "tena pratiyogaṃ yathoktam āvahati|",
    "2860:659": "rasanāgrasaṅgī tu nābhāvam anupalabdhau",
    "2860:660": "vyabhicaratiti na doṣaḥ kaśclt|",
    "2860:661": "ata eva kāryānupalabdhyādīnām sākṣād akṣamaḥ",
    "2860:662": "svabhāvānupalabdhāv antarbhāvaḥ paramparyeṇocyate ,",
    "2860:663": "tādṛśasya pratiyogasyābhāvat|",
    "2860:664": "normal;mso-pagination:",
    "2860:665": "none;mso-layout-grid-align:",
    "2860:666": "none;text-autospace:none“>",
    "2860:667": "normal;mso-pagination:",
    "2860:668": "none;mso-layout-grid-align:",
    "2860:669": "none;text-autospace:",
    "2860:670": "none“> tasmād upalambhayogyatāprāptasyānupalambha ity",
    "2860:671": "eva dṛśyānupa labdher lakṣaṇam|",
    "2860:672": "sa ca yathoktapratiyogyupalambharūpatayā",
    "2860:673": "siddhasyābhāvasya vyavahārikasyaivāvatiṣṭhata iti na nyāyaśāstrayor uparo-",
    "2860:674": "normal;mso-pagination:",
    "2860:675": "none;mso-layout-grid-align:",
    "2860:676": "none;text-autospace:none“>",
    "2860:677": "normal;mso-pagination:",
    "2860:678": "none;mso-layout-grid-align:",
    "2860:679": "none;text-autospace:none“> ( 10 )",
    "2860:680": "normal;mso-pagination:",
    "2860:681": "none;mso-layout-grid-align:",
    "2860:682": "none;text-autospace:none“>",
    "2860:683": "normal;mso-pagination:",
    "2860:684": "none;mso-layout-grid-align:",
    "2860:685": "none;text-autospace:none“> dhaḥ|",
    "2860:686": "ekendriyagrāhyopanyāsas tu ghaṭādyudāharaṇāpekṣa",
    "2860:687": "eva mantavya iti sthitam|",
    "2860:688": "normal;mso-pagination:",
    "2860:689": "none;mso-layout-grid-align:",
    "2860:690": "none;text-autospace:none“>",
    "2860:691": "normal;mso-pagination:",
    "2860:692": "none;mso-layout-grid-align:",
    "2860:693": "none;text-autospace:none“> tatra ,",
    "2860:694": "yadā tāvat timirālokasañjñite ākāśapradeśe",
    "2860:695": "dśyamāne devakulādau vā bheryādiravābhāvaṃ pratipadyate ,",
    "2860:696": "tadā tad eva tadekākāroparaktajñānaviṣayībhavajjñānaṃ",
    "2860:697": "va tādṛśaṃ niyataprāptikapratyakṣodayasya niṣedhyasya tajjñānasya vā",
    "2860:698": "paryudāso'nupalabdhiḥ|",
    "2860:699": "normal;mso-pagination:",
    "2860:700": "none;mso-layout-grid-align:",
    "2860:701": "none;text-autospace:",
    "2860:702": "none“> avyāpṛtacakṣus tu rasādis tajjñānaṃ vā'ntato",
    "2860:703": "manaskārākāro jñeyaparyudāsaḥ|",
    "2860:704": "tatsaṃvedanaṃ ca paryudāsaḥ|",
    "2860:705": "normal;mso-pagination:",
    "2860:706": "none;mso-layout-grid-align:",
    "2860:707": "none;text-autospace:none“>",
    "2860:708": "normal;mso-pagination:",
    "2860:709": "none;mso-layout-grid-align:",
    "2860:710": "none;text-autospace:",
    "2860:711": "none“> na hi tad api śabdapratyakṣodayavinākṛtam",
    "2860:712": "upapadyate paṭuśravaṇasya|",
    "2860:713": "nirvikalpakasya tu na niṣedhe' dhikāraḥ| kevalaṃ",
    "2860:714": "yāvaddeśasambaddhasya dhvaner adhyakṣaṃ na vyabhicarati rasādipratyakṣaṃ",
    "2860:715": "normal;mso-pagination:",
    "2860:716": "none;mso-layout-grid-align:",
    "2860:717": "none;text-autospace:",
    "2860:718": "none“> vikalpākārasaṃvedanaṃ vā tāvaddeśaśabdāpekṣa eva",
    "2860:719": "paryudāso vaktavyaḥ ,",
    "2860:720": "anyaṃ prati",
    "2860:721": "pratiyogasyānyonyapratyakṣāvyabhicāralakṣaṇasya vaktum aśakyatvāt| tataś ca",
    "2860:722": "pūrvavat pratyakṣasiddhir abhāvasya|",
    "2860:723": "normal;mso-pagination:",
    "2860:724": "none;mso-layout-grid-align:",
    "2860:725": "none;text-autospace:",
    "2860:726": "none“> vyavahāraś ca phalaṃ dṛśyānupalabdher eva",
    "2860:727": "śabde'pīti siddham|",
    "2860:728": "normal;mso-pagination:",
    "2860:729": "none;mso-layout-grid-align:",
    "2860:730": "none;text-autospace:",
    "2860:731": "none“> ekadhīvirahe'py asyā vyāpārānuparodhataḥ|",
    "2860:732": "normal;mso-pagination:",
    "2860:733": "none;mso-layout-grid-align:",
    "2860:734": "none;text-autospace:",
    "2860:735": "none“> anākṛṣṭer aniṣṭasya pratiyogisamāśrayāt ||2||",
    "2860:736": "normal;mso-pagination:",
    "2860:737": "none;mso-layout-grid-align:",
    "2860:738": "none;text-autospace:none“> iti|",
    "2860:739": "normal;mso-pagination:",
    "2860:740": "none;mso-layout-grid-align:",
    "2860:741": "none;text-autospace:",
    "2860:742": "none“> ālokādisamagratādhigataye",
    "2860:743": "janmādhikavyañjakāipekṣe sūcita ekadhīparicayo'śabdapradīpādiṣu| kiñcit tu",
    "2860:744": "śrutadṛṣṭapūrvimanasas tādṛgdaśāsaṃvido'nyeṣu svānupalabdhir eva hi",
    "2860:745": "ravādyākāraśūnyānyadhīḥ|",
    "2860:746": "normal;mso-pagination:",
    "2860:747": "none;mso-layout-grid-align:",
    "2860:748": "none;text-autospace:none“> ( 11 )",
    "2860:749": "normal;mso-pagination:",
    "2860:750": "none;mso-layout-grid-align:",
    "2860:751": "none;text-autospace:none“>",
    "2860:752": "normal;mso-pagination:",
    "2860:753": "none;mso-layout-grid-align:",
    "2860:754": "none;text-autospace:",
    "2860:755": "none“> nākṣasya siddhaṃ yadi tādavasthyaṃ śaktir",
    "2860:756": "normal;mso-pagination:",
    "2860:757": "none;mso-layout-grid-align:",
    "2860:758": "none;text-autospace:",
    "2860:759": "none“> na kāryānupalambhanasya|",
    "2860:760": "normal;mso-pagination:",
    "2860:761": "none;mso-layout-grid-align:",
    "2860:762": "none;text-autospace:",
    "2860:763": "none“> akṣasya siddhaṃ yadi tādavasthyaṃ phalaṃ",
    "2860:764": "normal;mso-pagination:",
    "2860:765": "none;mso-layout-grid-align:",
    "2860:766": "none;text-autospace:",
    "2860:767": "none“> na kāryānupalambhanasya||3||",
    "2860:768": "normal;mso-pagination:",
    "2860:769": "none;mso-layout-grid-align:",
    "2860:770": "none;text-autospace:",
    "2860:771": "none“> avaśyāpekṣaṇīyatve svabhāvānupalabdhiṣu|",
    "2860:772": "normal;mso-pagination:",
    "2860:773": "none;mso-layout-grid-align:",
    "2860:774": "none;text-autospace:",
    "2860:775": "none“> saṃsargasya kathaṃ siddhir jñānakāryādṛśo'pi vaḥ",
    "2860:776": "||4||",
    "2860:777": "normal;mso-pagination:",
    "2860:778": "none;mso-layout-grid-align:",
    "2860:779": "none;text-autospace:",
    "2860:780": "none“> bāhya evaiṣa niyamo yadi tatrāpi kiṃ kṛtaḥ|",
    "2860:781": "normal;mso-pagination:",
    "2860:782": "none;mso-layout-grid-align:",
    "2860:783": "none;text-autospace:",
    "2860:784": "none“> pradeśamātrayogyatvāc citrā hi viṣayasthitiḥ||5||",
    "2860:785": "normal;mso-pagination:",
    "2860:786": "none;mso-layout-grid-align:",
    "2860:787": "none;text-autospace:",
    "2860:788": "none“> anālokasya dhīr yadvad bādhā nānuktabhedikā|",
    "2860:789": "normal;mso-pagination:",
    "2860:790": "none;mso-layout-grid-align:",
    "2860:791": "none;text-autospace:",
    "2860:792": "none“> saṃsargiṇam anādṛtya tathā bādhāt tu kutracit",
    "2860:793": "||6||",
    "2860:794": "normal;mso-pagination:",
    "2860:795": "none;mso-layout-grid-align:",
    "2860:796": "none;text-autospace:",
    "2860:797": "none“> tasyās tu rūpaṃ pratiyogivastuvijñānam eveti na",
    "2860:798": "bhaṭṭabhittiḥ|",
    "2860:799": "normal;mso-pagination:",
    "2860:800": "none;mso-layout-grid-align:",
    "2860:801": "none;text-autospace:",
    "2860:802": "none“> tathā hi so'pi pratiyogibhāvo mithaḥ",
    "2860:803": "normal;mso-pagination:",
    "2860:804": "none;mso-layout-grid-align:",
    "2860:805": "none;text-autospace:",
    "2860:806": "none“> samakṣāvyabhicāra eva||7||",
    "2860:807": "normal;mso-pagination:",
    "2860:808": "none;mso-layout-grid-align:",
    "2860:809": "none;text-autospace:",
    "2860:810": "none“> tata evaikavijñānam anyābhāvavikalpakṛt|",
    "2860:811": "normal;mso-pagination:",
    "2860:812": "none;mso-layout-grid-align:",
    "2860:813": "none;text-autospace:",
    "2860:814": "none“> nābhāvabodho'dhyakṣeṇa tatkṛtān niścayāt paraḥ||8||",
    "2860:815": "normal;mso-pagination:",
    "2860:816": "none;mso-layout-grid-align:",
    "2860:817": "none;text-autospace:",
    "2860:818": "none“> yathoktapratiyogitve saty eva kṣamam akṣajam|",
    "2860:819": "normal;mso-pagination:",
    "2860:820": "none;mso-layout-grid-align:",
    "2860:821": "none;text-autospace:",
    "2860:822": "none“> tadabhāvāvasāyāyetīdṛśī vastunaḥ sthitiḥ||9||",
    "2860:823": "normal;mso-pagination:",
    "2860:824": "none;mso-layout-grid-align:",
    "2860:825": "none;text-autospace:none“>",
    "2860:826": "normal;mso-pagination:",
    "2860:827": "none;mso-layout-grid-align:",
    "2860:828": "none;text-autospace:",
    "2860:829": "none“> nanu pratiyogy evaikajñānasaṃsargī ,",
    "2860:830": "sākṣād ekajñānasaṃsarga syābhimatatvāt ,",
    "2860:831": "mukhyatayā sākārasvīkārāt|",
    "2860:832": "tataḥ sāmarthyād",
    "2860:833": "ekaśabdo'vyabhicāramātropalakṣaṇatayā'vatiṣṭhate|",
    "2860:834": "normal;mso-pagination:",
    "2860:835": "none;mso-layout-grid-align:",
    "2860:836": "none;text-autospace:none“>",
    "2860:837": "normal;mso-pagination:",
    "2860:838": "none;mso-layout-grid-align:",
    "2860:839": "none;text-autospace:none“> ( 12 )",
    "2860:840": "normal;mso-pagination:",
    "2860:841": "none;mso-layout-grid-align:",
    "2860:842": "none;text-autospace:none“>",
    "2860:843": "normal;mso-pagination:",
    "2860:844": "none;mso-layout-grid-align:",
    "2860:845": "none;text-autospace:",
    "2860:846": "none“> pratyakṣaikajātyapekṣayā caikavṛttir eva| na",
    "2860:847": "caivaṃ sañjñaṃātram ,",
    "2860:848": "tathāruḍhadarśanāt ,",
    "2860:849": "yathā eko vrīhiḥ sampannaḥ subhikṣaṃ karoti",
    "2860:850": "iti| tena yatrāpy ekajñānasaṃsargiṇi dṛśyamāna iti ucyate ,",
    "2860:851": "tatrāpy anyonyapratyakṣāvyabhicāriṇīty ayam",
    "2860:852": "evārthaḥ| ekāyatanabhāva eva",
    "2860:853": "normal;mso-pagination:",
    "2860:854": "none;mso-layout-grid-align:",
    "2860:855": "none;text-autospace:",
    "2860:856": "none“> tūpalakṣaṇatayā prakṛtāpekṣatayā vyākhyeyaḥ ,",
    "2860:857": "yathā pradeśas tajjñānaṃ cānupalabdhir iti|",
    "2860:858": "tataś ca svabhāvānupalabdhau pratiyogisamāśraya ity ekajñānasaṃsargasamāśraya",
    "2860:859": "evokto bhavatīti katham avyāpakam ekajñānasaṃsargitvaṃ nāma ?",
    "2860:860": "satyam evam|",
    "2860:861": "normal;mso-pagination:",
    "2860:862": "none;mso-layout-grid-align:",
    "2860:863": "none;text-autospace:",
    "2860:864": "none“> pratiyugavasitaikadhīsthitir yadi bhavate",
    "2860:865": "pratibhāti kā kṣatiḥ|",
    "2860:866": "normal;mso-pagination:",
    "2860:867": "none;mso-layout-grid-align:",
    "2860:868": "none;text-autospace:",
    "2860:869": "none“> nanu sakalakalāpasaṃhṛtaṃ svayam adṛśo'stu niṣedhanaṃ",
    "2860:870": "dhvaneḥ||10||",
    "2860:871": "normal;mso-pagination:",
    "2860:872": "none;mso-layout-grid-align:",
    "2860:873": "none;text-autospace:none“>",
    "2860:874": "normal;mso-pagination:",
    "2860:875": "none;mso-layout-grid-align:",
    "2860:876": "none;text-autospace:",
    "2860:877": "none“> anyonyapratyakṣāvyabhicārasya kenāpi dhvanāv",
    "2860:878": "api sambhavāt ,",
    "2860:879": "itarasya tu",
    "2860:880": "pratiyogino'yogāt|",
    "2860:881": "pratiyogaparyavasitam ekajñānasaṃsargaṃ manyamānasya",
    "2860:882": "svānupalabdhitaḥ prakṛtaniṣedhe kā'parāpekṣā ?",
    "2860:883": "tasmān na yogyadeśāśeṣaśabdābhāvasādhane",
    "2860:884": "jñānakāryānupalambhaḥ śaraṇīkaraṇīyaḥ ,",
    "2860:885": "svabhāvānupalabdhyaiva siddher iti|",
    "2860:886": "timirālokayos tu parasparadeśaparihāreṇa sthitayor abhinnendriyakṛta",
    "2860:887": "evaikajñānasaṃsargaḥ sulabha iti tadabhāvasādhanādhikāre dūrataiva",
    "2860:888": "svabhāvānupalambhād anyasādhanacinteti sarvaśabdābhāvacarcā samāptā|",
    "2860:889": "normal;mso-pagination:",
    "2860:890": "none;mso-layout-grid-align:",
    "2860:891": "none;text-autospace:none“> ( 13 )"
}