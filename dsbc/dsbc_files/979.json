{
    "979:0": "(20) kausīdyavargaḥ",
    "979:1": "kausīdyena jñānahāniḥ",
    "979:2": "kausīdyamatimāyā ca dambhaḥ pāruṣyameva ca |",
    "979:3": "niyātabhūmayo dṛṣṭā jñānasya ca vivarjanam ||1||",
    "979:4": "saṃśleṣaścāpyasādhūnāṃ sādhūnāṃ varjanaṃ tathā |",
    "979:5": "nāśasya hetavaḥ śaktā mithyādarśanameva ca ||2||",
    "979:6": "adeśakālasaṃraṃbho vācyāvācyamajānataḥ |",
    "979:7": "anarthabhūmayo hyetā visrambhaścāpi tanmayaḥ ||3||",
    "979:8": "anarthabhūmayaḥ",
    "979:9": "yena tena ca samprītiḥ yatra tatra ca bhojanam |",
    "979:10": "lāghavaṃ janayatyante'praśaṃsā cātmanastathā ||4||",
    "979:11": "dhairyanāśaḥ smṛtibhraṃśo virodhaḥ pārthivena ca |",
    "979:12": "akrāntamṛtyavo hyete krūratā manasi sthitā ||5||",
    "979:13": "akarmāphalatattvajño dharmādharmavahiṣkṛtaḥ |",
    "979:14": "puruṣaḥ sādhunirmuktaḥ prapātagamanāśayaḥ ||6||",
    "979:15": "kausīdyamatinidrā ca rasanā gṛhyate tathā |",
    "979:16": "puṃdveṣayonayaḥ proktāḥ pāruṣyavacanaṃ tathā ||7||",
    "979:17": "lobho'pamānasya kāraṇam",
    "979:18": "atilobho'pamānaśca atimānaśca cāpalam |",
    "979:19": "dharmavarjyā kāmasevā mohasya paridīpikāḥ ||8||",
    "979:20": "doṣāṇāṃ mūlaṃ kausīdyam",
    "979:21": "trayāṇāmiha doṣāṇāṃ kausīdyaṃ mūlamucyate |",
    "979:22": "vīryārambheṇa duṣyante doṣā manasi sambhavāḥ ||9||",
    "979:23": "vīryārambheṇa hi phalaṃ hyavaśyamupabhujyate |",
    "979:24": "nyāyenārabdhatattvasya karmaṇo dṛśyate phalam ||10||",
    "979:25": "karmaṇastrividhasyāsya phalaṃ trividhamucyate |",
    "979:26": "trirāśiniyataṃ tacca triśūlaṃ tribhavānugam ||11||",
    "979:27": "kausīdyasevino durgatiḥ",
    "979:28": "pāpasevī pracaṇḍo yaḥ kausīdyamapi sevate |",
    "979:29": "dharmavidveṣakaḥ krūro'nutpathānupadhāvati ||12||",
    "979:30": "yasya tasya ca santuṣṭo yasya tasya prakupyati |",
    "979:31": "yatra tatra ca saṃsakto sa mūḍha iti kathyate ||13||",
    "979:32": "kausīdyaṃ (yat)",
    "979:33": "svamanasaḥ pramādaviṣamūrcchitam |",
    "979:34": "prapātaṃ taṃ ca saṃrabdhamavisaṃvādakaṃ param ||14||",
    "979:35": "vīryārambhe mahāpāpakausīdyamalavarjitāḥ |",
    "979:36": "vimukterupabhoktāraste janāḥ sukhabhāginaḥ ||15||",
    "979:37": "kausīdyaṃ sarvadharmāṇāmajarāmarakārakam |",
    "979:38": "tena doṣeṇa mahatā narā duḥkhasya bhāginaḥ ||16||",
    "979:39": "sahāyaśca sukhāveśī tasmāt tat parivarjayet |",
    "979:40": "tena viddho hi puruṣaḥ svadhistutyaḥ samantataḥ ||17||",
    "979:41": "kusīdasyālpabhāgasya mohāpahṛtacetasaḥ |",
    "979:42": "kutsitaḥ svajanaiḥ sarvairna gatirvidyate śivā ||18||",
    "979:43": "kausīdyarataḥ pāpībhavati",
    "979:44": "kausīdyapāpasaṃsargīstyānamiddhaṃ tathaiva ca |",
    "979:45": "mokṣadvāravighātāya bhavantyete mahābhayāḥ ||19||",
    "979:46": "duḥkhasyaitāni harmyāṇi",
    "979:47": "āhrīkyamanapatrāpyamauddhatyaṃ pāpamitratā |",
    "979:48": "duḥkhasyaitāni harmyāṇi tebhyo rakṣennu paṇḍitaḥ ||20||",
    "979:49": "kausīdyenābhibhūtā ye nirārambhā gatitviṣaḥ |",
    "979:50": "socchvāsamaraṇaṃ teṣāṃ jīvitaṃ cāpi niṣphalam ||21||",
    "979:51": "jīvamānā na jīvanti kausīdyopahatā narāḥ |",
    "979:52": "mṛtyoratyadhikaṃ hyetat kausīdyamiti manyate ||22||",
    "979:53": "ārabdhavīryā eva bhavasāgaraṃ taranti",
    "979:54": "kausīdyapaṅkamagnā ye magnāste duḥkhasaṃstare |",
    "979:55": "ārabdhavīryā ye puṃsaste tīrṇā bhavasāgarāt ||23||",
    "979:56": "kausīdyānmandavīryo yaḥ sadā pāparataśca yaḥ |",
    "979:57": "sa jīvamāno'pi mṛto mṛtastu narakāya saḥ ||24||",
    "979:58": "mānavānāṃ nirdhanatve kausīdyaṃ kāraṇam",
    "979:59": "nirdhanāḥ paśubhistulyāste narā duḥkhabhāginaḥ |",
    "979:60": "parapiṇḍāśino dīnāḥ kausīdyaṃ tatra kāraṇam ||25||",
    "979:61": "prāyaśastu kusīdānāṃ paradāropajīvinām |",
    "979:62": "ratābhilāṣo'tyadhiko maithune ca sadā ratiḥ ||26||",
    "979:63": "te tattvakārikā riktāḥ kevalāhāratatparāḥ |",
    "979:64": "mṛtyukāle samutpanne dahyante svena cetasā ||27||",
    "979:65": "śītoṣṇaṃ ca sahantyete kṣutpipāse tathaiva ca |",
    "979:66": "gātrāntā ca kriyā kāryā yātrā dharmāya sarvadā ||28||",
    "979:67": "ataḥ kausīdye na matiḥ kāryā",
    "979:68": "na kausīdye matiṃ kuryāt kuśīle śīlakāmukaḥ |",
    "979:69": "saṃsāre sīdati nityaṃ na ca duḥkhāt pramucyate ||29||",
    "979:70": "kudīdānvitaḥ lokavañcito bhavati",
    "979:71": "paribhūya satāṃ madhye kusīdāllokavañcitaḥ |",
    "979:72": "vañcitaśca bhavatyante śarmaṇo vā vimucyate ||30||",
    "979:73": "dharmeṇa vimuktirbhavati",
    "979:74": "vīryavān smṛtisaṃlabdha ekāntanirataḥ sadā |",
    "979:75": "vimuktapāpakaidharmairmokṣaṃ prāpnoti yatnataḥ ||31||",
    "979:76": "kukarmeṣu matiḥ na kāryā",
    "979:77": "evaṃvidhā duḥkhaparamparā hi,",
    "979:78": "sattvaḥ kukarmeṣu (matiṃ) na kuryāt |",
    "979:79": "loke tridoṣānalasampradīpte,",
    "979:80": "kuryāt parāṃ śāntikṛpā mṛte na ||32||",
    "979:81": "||iti kausīdyavargo viṃśaḥ ||",
    "979:82": "cittañca vāk tathā karma saṃyojanantu pāpakam |",
    "979:83": "naraka-preta-tiryak-kṣut-kausīdyāni vidurdaśa ||",
    "979:84": "||iti dvitīyam udānam ||"
}