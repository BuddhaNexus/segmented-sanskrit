{
    "874:0": "śākyasiṃhastotram",
    "874:1": "durgatipariśodhanoddhṛtam",
    "874:2": "om namaḥ śākyasiṃhāya",
    "874:3": "namaste śākyasiṃhāya dharmacakrapravartaka |",
    "874:4": "traidhātukaṃ jagatsarvaṃ śodhayet sarvadurgatim || 1 ||",
    "874:5": "namaste vajroṣṇīṣāya dharmadhātusvabhāvaka |",
    "874:6": "sarvasattvahitārthāya ātmatattvapradeśaka || 2 ||",
    "874:7": "namaste ratnoṣṇīṣāya samantāttattvabhāvanaiḥ |",
    "874:8": "traidhātukaṃ sthitaṃ sarvamabhiṣekapradāyaka || 3 ||",
    "874:9": "namaste padmoṣṇīṣāya svabhāvapratyabhāṣaka |",
    "874:10": "āśvāsayanyaḥ sattveṣu dharmāmṛtaṃ pravartayet || 4 ||",
    "874:11": "namaste viśvoṣṇīṣāya svabhāvakṛtamanusthita |",
    "874:12": "viśvakarmakaro hyeṣa sattvānāṃ duḥkhaśāntaye || 5 ||",
    "874:13": "namaste tejoṣṇīṣāya traidhātukamabhāṣaka |",
    "874:14": "sarvasattva upāyeṣu sattvadṛṣṭaṃ kariṣyate || 6 ||",
    "874:15": "namaste dhvajoṣṇīṣāya cintāmaṇidhvajādhara |",
    "874:16": "dānena sarvasattvānāṃ sarvāśāparipūraka || 7 ||",
    "874:17": "namaste tṛṣṇoṣṇīṣāya kleśopakleśachedana |",
    "874:18": "caturmārabalaṃ bhagnaṃ sattvānāṃ bodhiprāptaye || 8 ||",
    "874:19": "namaste chatroṣṇīṣāya ātapatraṃ suśobhanam |",
    "874:20": "traidhātuka jagatsarvaṃ dharmarājatvaprāpakam || 9 ||",
    "874:21": "lāsyā mālā tathā gītā nṛtyā devīcatuṣṭayam |",
    "874:22": "puṣpā dhūpā ca dīpā ca gandhādevī namo'stu te || 10 ||",
    "874:23": "dvāramadhyasthitā ye ca aṃkuśapāśaphoṭakāḥ |",
    "874:24": "śraddhābhāvavinirjñātaṃ dvārapāla namo'stu te || 11 ||",
    "874:25": "vedikādau sthitā ye ca catasro dvārapālikāḥ |",
    "874:26": "muditādau daśa sthitvā bodhisattva namostu te || 12 ||",
    "874:27": "brahmendrarudracandrārkā lokapālāścaturdiśam |",
    "874:28": "agnī rākṣasavāyuśca bhūtādhipate namostu te || 13 ||",
    "874:29": "anena stotrarājena saṃsthito maṇḍalāgrataḥ |",
    "874:30": "vajraghaṇṭāgharo mantrī idaṃ stotramudāharet || 14 ||",
    "874:31": "durgatipariśodhanoddhṛtaṃ śrīśākyasiṃhastotraṃ samāptam |"
}