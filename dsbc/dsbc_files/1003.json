{
    "1003:0": "Madhyamakahṛdayam",
    "1003:1": "bhavyakṛtam",
    "1003:2": "prathamaḥ paricchedaḥ",
    "1003:3": "bodhicittāparityāgaḥ",
    "1003:4": "apratarkyamavijñeyamanālayamalakṣaṇam|",
    "1003:5": "anirūpyaṃ svasaṃvedyamanādinidhanaṃ śivam ||1||",
    "1003:6": "nirvikalpaṃ nirābhāsaṃ nirnimittaṃ nirañjanam |",
    "1003:7": "na dvayaṃ nādvayaṃ śāntaṃ dhīpracāravivarjitam ||2||",
    "1003:8": "tattvaṃ dideśa kāruṇyād yo nirakṣaramakṣaraiḥ |",
    "1003:9": "bhāvato&#39;stu namastasmai śāstre&#39;",
    "1003:10": "vitathavādine ||3||",
    "1003:11": "mahābodhau kṛtadhiyāṃ parārthodayadīkṣayā |",
    "1003:12": "tattvāmṛtāvatārāya śaktitaḥ kiṃciducyate ||4||",
    "1003:13": "bodhicittāparityāgo munivratasamāśrayaḥ |",
    "1003:14": "tattvajñānaiṣaṇā ceti caryā sarvārthasiddhaye ||5||",
    "1003:15": "bodhicittaṃ mahāmaitrīkaruṇājñānabhūṣaṇam |",
    "1003:16": "buddhabījaṃ yato vidvāṃstadatyāgāya yujyate ||6||",
    "1003:17": "dhīmatā sattvamahatā paraduḥkhe&#39;sahiṣṇunā |",
    "1003:18": "samyagārabdhavīryeṇa yuktaṃ śaktimatā satā ||7||",
    "1003:19": "lokamālokya sakalaṃ prajñālokatiraskṛtam |",
    "1003:20": "saṃsārāmedhyapātālāt tīrtvā tārayituṃ svayam ||8||",
    "1003:21": "kā vā śaktimataḥ saktiryadanāthāṃstapasvinaḥ |",
    "1003:22": "rāgādinigaḍairbaddhān ghore saṃsāracārake ||9||",
    "1003:23": "pramādamadirāṃ pītvā prasuptān mohanidrayā |",
    "1003:24": "vitarkataskarāśeṣaviluptaśubhasaṃcayān ||10||",
    "1003:25": "prajñāniśitanistriṃśacchinnaniḥśeṣabandhanaḥ |",
    "1003:26": "mukto na mocayedenān yadayaṃ karuṇātmakaḥ ||11||",
    "1003:27": "yo&#39;pi bāhubalopāttaṃ parīttaṃ kāmajaṃ sukham |",
    "1003:28": "ekākī kṛpaṇo bhuṅakte so&#39;",
    "1003:29": "pi garhyaḥ satāṃ bhavet ||12||",
    "1003:30": "kiṃ punaścakravartīndrabahmaṇāmapi durlabham |",
    "1003:31": "atyantatṛṣṇāvicchedi sādhāraṇamupāyataḥ ||13||",
    "1003:32": "vigrahakṣayaparyantaduḥkhādyanabhibhāvitam |",
    "1003:33": "niḥśeṣaduḥkhaśamanaṃ tattvārthādhigamāmṛtam ||14||",
    "1003:34": "kiṃ ca kleśagrahāveśād duḥkhaṃ duḥkhātureṣvapi |",
    "1003:35": "kṛtaṃ yeṣu mayā pūrvaṃ kṣatakṣāropahāravat ||15||",
    "1003:36": "ye ca jātyantare premabahumānopakāriṇaḥ |",
    "1003:37": "teṣāṃ pratikriyā kānyā nirvāṇaprāpaṇād bhavet ||16||",
    "1003:38": "na bādhyante pradīptāsikalpairapi bhavairbudhāḥ |",
    "1003:39": "parārthakaraṇodbhūtaprītihlāditacetasaḥ ||17||",
    "1003:40": "dauḥśīlyākriyayā sarvadurgatidvārabandhanāt |",
    "1003:41": "śūnyatādarśanābhyāsāt kleśavṛttyupaghātataḥ ||18||",
    "1003:42": "kṛtapuṇyatayodyānayātrāmiva ca ṣaḍgatim |",
    "1003:43": "paśyantastrāsamāyānti na santo bhavacārakāt ||19||",
    "1003:44": "na bhave doṣadarśitvāt kṛpālutvānna nirvṛtau |",
    "1003:45": "sthitāstiṣṭhanti ca bhave parārthodayadīkṣitāḥ ||20||",
    "1003:46": "bhedābhedena saṃsāranirvāṇānupalambhataḥ |",
    "1003:47": "na ca kvacana tiṣṭhanti sarvatra ca bhave budhāḥ ||21||",
    "1003:48": "bodhyaṅgasaptaratnāḍhyaṃ labdhvāmitaguṇākaram |",
    "1003:49": "saddharmacakravartitvaṃ surāsuranamaskṛtam ||22||",
    "1003:50": "muktābhedaśaratpūrṇaśaśāṅkakiraṇāmalaiḥ |",
    "1003:51": "yaśobhiśca vacobhiśca pūrayitvā diśo daśa ||23||",
    "1003:52": "triratnavaṃśasthitaye sthāpayitvā guṇākarān |",
    "1003:53": "satputrān devanāgādicūḍāmahitaśāsanān ||24||",
    "1003:54": "kṛtasvaparakāryatvānnirvṛtāste sunirvṛtāḥ |",
    "1003:55": "ato&#39;nye skandhavicchedāducchinnāste&#39;",
    "1003:56": "pi nirvṛtāḥ ||25||",
    "1003:57": "na kroṣṭā mattamātaṅgakumbhāsphālanapāṭane |",
    "1003:58": "na mātaṅgaḥ samudrāntamahīmaṇḍalapālane ||26||",
    "1003:59": "gambhīrānuttarodārasaṃkhyātītaguṇākare |",
    "1003:60": "na hīnasattbo buddhatve manorathamapīcchati ||27||",
    "1003:61": "aprameyādbhutācintyasarvadīptyatibhāviṣu |",
    "1003:62": "saṃbuddhaguṇaratneṣu kaḥ kurvīta na mānasam ||28||",
    "1003:63": "kaḥ parārthakriyāśūro mahāpuruṣaceṣṭitaiḥ |",
    "1003:64": "nānantamapi saṃsāraṃ tiṣṭhedekamaho yathā ||29||",
    "1003:65": "kaḥ parārthaikakāryāṇāmāryāṇāṃ paddhatiṃ kṛtī |",
    "1003:66": "nānuyāyādatīto&#39;",
    "1003:67": "pi yat kathāvastutāṃ vrajet ||30||",
    "1003:68": "ko&#39;sau parahitādhānasādhanīkaraṇāt tanum |",
    "1003:69": "na nayet kadalīphenaniḥsāraṃ merusāratām ||31||",
    "1003:70": "pratikṣaṇaṃ jarāmṛtyurujāmāśrayamāśrayam |",
    "1003:71": "karoti dhanyaḥ kāruṇyāt parasaukhyodayāśrayam ||32||",
    "1003:72": "sasaddharmapradīpo hi praṇaṣṭāṣṭākṣaṇaḥ kṣaṇaḥ |",
    "1003:73": "saphalīkaraṇīyo&#39;",
    "1003:74": "yaṃ mahāpuruṣacaryayā ||33||",
    "1003:75": "bodhicittāparityāgo nāma prathamaḥ paricchedaḥuṣaceṣṭitaiḥ |",
    "1003:76": "nānantamapi saṃsāraṃ tiṣṭhedekamaho yathā ||29||",
    "1003:77": "kaḥ parārthaikakāryāṇāmāryāṇāṃ paddhatiṃ kṛtī |",
    "1003:78": "nānuyāyādatīto&#39;pi yat kat"
}