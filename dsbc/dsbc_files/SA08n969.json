{
  "SA08n969:0": "10) madyajugupsāvargaḥ",
  "SA08n969:1": "madyapānavarṇanasādhanapradarśanam",
  "SA08n969:2": "madyapānaṃ na seveta madyaṃ hi viṣamuttamam |",
  "SA08n969:3": "naśyanti kuśalā dharmā madyapānaniṣevaṇāt ||1 ||",
  "SA08n969:4": "yaḥ sevate sadā madyaṃ tasya buddhirasaṃsthitā |",
  "SA08n969:5": "balabuddhī na dharmo'sti tasmānmadyaṃ vivarjayet ||2 ||",
  "SA08n969:6": "nāśānāmuttamaṃ nāśaṃ madyamuktaṃ manīṣibhiḥ |",
  "SA08n969:7": "tasmānmadyaṃ na seveta (madyaṃ)",
  "SA08n969:8": "nāśayate naram ||3 ||",
  "SA08n969:9": "aniṣṭāḥ pāpakā dharmā madyapānaniṣevaṇāt |",
  "SA08n969:10": "bhavanti tasmād viṣavanmadyapānaṃ vivarjayet ||4 ||",
  "SA08n969:11": "dhanakṣayaṃ pāpakaraṃ kausīdyakaramuttamam |",
  "SA08n969:12": "madyapānasthitā doṣāḥ tasmāt tat parivarjayet ||5 ||",
  "SA08n969:13": "rāgasyoddīpanaṃ madyaṃ krodhasyāpi tathaiva ca |",
  "SA08n969:14": "mohasyoddīpakaṃ bhūyastasmānmadyaṃ vivarjayet ||6 ||",
  "SA08n969:15": "madyamūlamanarthasya hāsasya narakasya ca |",
  "SA08n969:16": "sarvendriyavināśānāṃ hetubhūtaṃ hyanarthakam ||7 ||",
  "SA08n969:17": "atiharṣābhidhānasya śokasya ca bhayasya ca |",
  "SA08n969:18": "vāgdoṣasyā'tidamyasya pāruṣyasyā''spadaṃ hi tat ||8 ||",
  "SA08n969:19": "madyenā''kṣiptamanasaḥ puruṣāḥ paśubhiḥ samāḥ |",
  "SA08n969:20": "kāryākārya na vindanti tasmānmadyaṃ vivarjayet ||9 ||",
  "SA08n969:21": "madyakṣipto hi puruṣo jīvannapi mṛto mataḥ |",
  "SA08n969:22": "ya icchejjīvitaṃ saukhyaṃ sa madyaṃ varjayet sadā ||10 ||",
  "SA08n969:23": "madyaṃ sarvadoṣāspadam",
  "SA08n969:24": "sarvadoṣāspadaṃ madyaṃ sarvānarthakaraṃ sadā |",
  "SA08n969:25": "sarvapāpeṣu sopānaṃ tamasāmālayo mahān ||11 ||",
  "SA08n969:26": "madyena pretaloke narake vā patanam",
  "SA08n969:27": "madyena narakaṃ yānti pretalokaṃ tathaiva ca |",
  "SA08n969:28": "tiryakṣu yānti puruṣā madyadoṣeṇa vañcitāḥ ||12 ||",
  "SA08n969:29": "viṣādapi viṣaṃ madyaṃ narakānnarakaṃ tathā |",
  "SA08n969:30": "vyādhīnāṃ ca paraṃ vyādhirmadyamuktaṃ manīṣibhiḥ ||13 ||",
  "SA08n969:31": "madyena hānipradarśanam",
  "SA08n969:32": "buddhīndriyavināśāya dharmaratnaṃ kṣayāya ca |",
  "SA08n969:33": "yo'tirekaparaṃ madyaṃ brahmacaryabadhāya ca ||14 ||",
  "SA08n969:34": "madyena laghutāṃ yānti pārthivā śāstracakṣuṣaḥ |",
  "SA08n969:35": "kiṃ punaḥ prākṛtā martyā madyapānavilambitāḥ ||15 ||",
  "SA08n969:36": "madyasya vināśakaratvam",
  "SA08n969:37": "kuṭhāraḥ sarvadharmāṇāṃ hrīvināśakaraṃ param |",
  "SA08n969:38": "madyaṃ niṣevitaṃ martyairvināśāyopakalpyate ||16 ||",
  "SA08n969:39": "madyena jñānājñānavivekaśūnyapradarśanam",
  "SA08n969:40": "na jñānaṃ nāpi vijñānaṃ na kāryāṇi na ca kriyām |",
  "SA08n969:41": "jānīte puruṣaḥ sarva madyena hṛtacetasā ||17 ||",
  "SA08n969:42": "madyasevanasya paritāpasādhanam",
  "SA08n969:43": "akasmāt tapyate janturakasmāt paritapyate |",
  "SA08n969:44": "bhavatyakasmāt pāpī (ca)",
  "SA08n969:45": "yo madyamanusevate ||18 ||",
  "SA08n969:46": "madyasya buddhisammohajanakatvam",
  "SA08n969:47": "buddhisammohajanakaṃ lokadvayavināśakam |",
  "SA08n969:48": "vahniśca mokṣadharmāṇāṃ madyamekaṃ vyavasthitam ||19 ||",
  "SA08n969:49": "madyasya kimpākatvam",
  "SA08n969:50": "abhyāse madhuraṃ madyaṃ vipāke paramaṃ kaṭu |",
  "SA08n969:51": "kimpākādapi kimpākaṃ madyamuktaṃ parīkṣakaiḥ ||20 ||",
  "SA08n969:52": "narakasya sādhanaṃ madyam",
  "SA08n969:53": "na madye viśvaseddhīmān naraṃ vakṣyati māmiti |",
  "SA08n969:54": "śītasparśa vipākoṣṇaṃ madyaṃ narakagāmikam ||21 ||",
  "SA08n969:55": "sampattau vyasanaṃ madyaṃ devānāṃ tu viśeṣataḥ |",
  "SA08n969:56": "yathā yathā sukhā prītistannāśe vyasanaṃ tathā ||22 ||",
  "SA08n969:57": "madyapānamadonmattāḥ sattvā mohavaśānugāḥ |",
  "SA08n969:58": "sākṣyamohamayaṃ pānaṃ pibanti rasatṛṣṇayā ||23 ||",
  "SA08n969:59": "madyaṃ mohamayaṃ pāna pītvā kālena coditāḥ |",
  "SA08n969:60": "nākāt pratyakṣanarakaṃ tasmāt madyaṃ na saṃspṛśet ||24 ||",
  "SA08n969:61": "darśanātpānācca madyapānaṃ mohajanakam",
  "SA08n969:62": "darśanāt sparśanāt pānāta madyaṃ mohayate naram |",
  "SA08n969:63": "tasmāt sa madyapānaṃ ca dūrataḥ parivarjayet ||25 ||",
  "SA08n969:64": "darśanājjāyate lobhaḥ sparśanād gandhasambhavaḥ |",
  "SA08n969:65": "gandhād rasābhilāṣaśca rasanādadhamā matiḥ ||26 ||",
  "SA08n969:66": "manīṣiṇaḥ madyasevanātpatanti",
  "SA08n969:67": "naikasarvādhamaṃ nyāsaṃ kathayanti manīṣiṇaḥ |",
  "SA08n969:68": "nāmarūpaniṣedhāya yathā madyaṃ niṣevitam ||27 ||",
  "SA08n969:69": "madyapānaphalasūcanam",
  "SA08n969:70": "vāgbhrāmayati mastiṣkaṃ cakṣuṣīdhvanireva ca |",
  "SA08n969:71": "sambhrāntivimatirmūḍho na kiñcit pratipadyate ||28 ||",
  "SA08n969:72": "striyo'pi madyapāyinamupahasanti",
  "SA08n969:73": "striyo'pyupahasantīmaṃ puruṣaṃ patitaṃ bhuvi |",
  "SA08n969:74": "niśceṣṭaṃ kāṣṭhasadṛśaṃ niścalaṃ patitaṃ bhuvi ||29 ||",
  "SA08n969:75": "madyapānaṃ maraṇādapi nikṛṣṭataram",
  "SA08n969:76": "sambhāvitasya maraṇaṃ madyapānaṃ prakīrtyate |",
  "SA08n969:77": "hālāhalādabhyadhikaṃ kārāvāsādhikaṃ ca tat ||30 ||",
  "SA08n969:78": "madyapānavarjanaṃ śreyaskaram",
  "SA08n969:79": "ādīnavāśca ṣaṭ triṃśanmadyapānādavasthitāḥ |",
  "SA08n969:80": "tasmādādīnavo jñeyaḥ sa hi tad varjayet sadā ||31 ||",
  "SA08n969:81": "madyapānaṃ viduṣo'pi jantoḥ malinīkaraṇāya bhavati",
  "SA08n969:82": "atijātasya viduṣo malinīkaraṇaṃ mahat |",
  "SA08n969:83": "kāśapuṣpasamaṃ jantuṃ kurute laghusattvaram ||32 ||",
  "SA08n969:84": "viṣayānaladagdhaḥ kāryākāryaśūnyo bhavati",
  "SA08n969:85": "pramādauhyati magnānāṃ viṣayairapahṛṣyate |",
  "SA08n969:86": "madyapānena bhūyaśca manovyāmohakāriṇā ||33 ||",
  "SA08n969:87": "viṣayānaladagdhasya kāryākāryamajānataḥ |",
  "SA08n969:88": "vanopavanalabdhasya madyapānasya kiṃ punaḥ ||34 ||",
  "SA08n969:89": "madyapānaṃ mohāya pāpāya jāyate",
  "SA08n969:90": "rasena śobhanaṃ madyaṃ pariṇāmena dāruṇam |",
  "SA08n969:91": "pariṇāmaphalaṃ pāpaṃ narakeṣūpapadyate ||35 ||",
  "SA08n969:92": "pītaṃ janayate mohaṃ mohāt pāpeṣu rakṣyate |",
  "SA08n969:93": "saṃraktahṛdayo bālo narakānupadhāvati ||36 ||",
  "SA08n969:94": "madyapānamadhamatvasādhanam",
  "SA08n969:95": "prakarṣa janayatyādau vipāke dainyamuttamam |",
  "SA08n969:96": "tṛṭ chedaṃ kurute cāsau paścāddāhaṃ sudāruṇam ||37 ||",
  "SA08n969:97": "tad buddhiṃ nāśayatyādau paścānnāśayate sukham |",
  "SA08n969:98": "tasmāt sa puruṣo dhīro yo madyaṃ nānusevate ||38 ||",
  "SA08n969:99": "madyaniṣeviṇo vihagasadṛśā bhavanti",
  "SA08n969:100": "vihagaiḥ sadṛśaṃ yānti puruṣā madyasevinaḥ |",
  "SA08n969:101": "tulyaṃ vyāmohajanakaṃ madyaṃ mohamahāviṣam ||39 ||",
  "SA08n969:102": "vimohitā durgatimadhigacchanti",
  "SA08n969:103": "yairmadyaṃ viṣavad dṛṣṭaṃ tairdṛṣṭaṃ padamuttamam |",
  "SA08n969:104": "yaistu tad virasaṃ pītaṃ pītaṃ tāmra (ka) lohitam ||40 ||",
  "SA08n969:105": "niṣpratīkārakarmāṇi yaḥ karoti vimohitaḥ |",
  "SA08n969:106": "madyapānasamāviṣṭaḥ so'nte gacchati durgatim ||41 ||",
  "SA08n969:107": "madyapānasevināṃ nāśo bhavati",
  "SA08n969:108": "ekatra sarvapāpāni madyapāna (niṣevaṇam) |",
  "SA08n969:109": "yasmānnāśayate (madyaṃ)",
  "SA08n969:110": "cittamūlaśca saṃvaraḥ ||42 ||",
  "SA08n969:111": "madyapāyī naṣṭadharmo bhavati",
  "SA08n969:112": "naikāṅgitā hi cittasya na dharmāṇāṃ vicāraṇā |",
  "SA08n969:113": "yaḥ pā(pa)nirato bhikṣurbhavenmadyaniṣevaṇāt ||43 ||",
  "SA08n969:114": "madyenākṣiptamanaso kuśalasya ca ghātakaḥ |",
  "SA08n969:115": "naṣṭadharmasya sattvasya nāyaṃ loko na cāparaḥ ||44 ||",
  "SA08n969:116": "īryyāpathaṃ na jānāti na kālaṃ nāpi deśanām |",
  "SA08n969:117": "saddharmato viruddhaśca tucchaṃ kimapi bhāṣate ||45 ||",
  "SA08n969:118": "svayaṃ tāvanna jānāti kimidaṃ kathyate mayā |",
  "SA08n969:119": "vākpāruṣyaṃ kathaṃ cānyaṃ parijñāsyatyaśobhanam ||46 ||",
  "SA08n969:120": "lāghavaṃ yāti lokasya dharmācca parihīyate |",
  "SA08n969:121": "nidhana puruṣairdṛṣṭaṃ madyajvalanasevanāt ||47 ||",
  "SA08n969:122": "madyapānaṃ kutsāṃ sampādayati",
  "SA08n969:123": "nāśo bhavatyatīte hi vartamāne suhṛjjane |",
  "SA08n969:124": "anāgate kutsitānāṃ madyaṃ traikālyanāśakam ||48 ||",
  "SA08n969:125": "madyaṃ dharmapradūṣakameva",
  "SA08n969:126": "nāmarūpavināśāya cittanāśāya dehinām |",
  "SA08n969:127": "utpannadoṣajanakaṃ madyaṃ dharmapradūṣakam ||49 ||",
  "SA08n969:128": "madyavarjanaṃ dharmāya pānañca mṛtyurna bhavati",
  "SA08n969:129": "samāhitā dharmaśīlāḥ puruṣā madyavarjakāḥ |",
  "SA08n969:130": "te yānti paramaṃ sthānaṃ yatra mṛtyurna vidyate ||50 ||",
  "SA08n969:131": " ||iti madyajugupsāvargo daśamaḥ ||"
}