{
  "SA05n823:0": "potalakāṣṭakam",
  "SA05n823:1": "jaya siddhasurāsuralokaguruṃ",
  "SA05n823:2": "kamalāsanasaṃsthitapādayugam |",
  "SA05n823:3": "daśapāramitādikapadmadharaṃ",
  "SA05n823:4": "praṇamāmi sadā varakāruṇikam || 1 ||",
  "SA05n823:5": "bahukoṭinarādhipalabdhavaraṃ",
  "SA05n823:6": "jaya susthitasusthitanāthamunim |",
  "SA05n823:7": "bhavasāgarapāragatādhikaraṃ",
  "SA05n823:8": "śaraṇāgatasattvahitārthakaram || 2 ||",
  "SA05n823:9": "kamalāsanacārusurupadharaṃ",
  "SA05n823:10": "amitābhatathāgatamaulidharam |",
  "SA05n823:11": "kamalojjvalabhūṣitagātravaraṃ",
  "SA05n823:12": "navabhāskaraśobhanadīptikaram || 3 ||",
  "SA05n823:13": "mṛdutāmranakhāṅguliśobhamukhaṃ",
  "SA05n823:14": "śaśibimbasamaprabhasaumyamukham |",
  "SA05n823:15": "ṣaḍabhijñaguṇākaravandyatanuṃ",
  "SA05n823:16": "varasusthitanūpurahārayutam || 4 ||",
  "SA05n823:17": "maṇikuṇḍalamaṇḍitagaṇḍayugaṃ",
  "SA05n823:18": "ghanagarjitatulyagabhīrarutam |",
  "SA05n823:19": "girigahvaradyotanivāsakṛtaṃ",
  "SA05n823:20": "vṛṣavāhanahaṃsamṛgāyuśatam || 5 ||",
  "SA05n823:21": "ṛṣidevagaṇādhipasaṃstutikaṃ",
  "SA05n823:22": "jinarūpadharātmakabodhiparam |",
  "SA05n823:23": "dvipadottamanāthasurādhipatiṃ",
  "SA05n823:24": "bahusattvavimocanamuktikaram || 6 ||",
  "SA05n823:25": "dhvajachatrasuśobhitavāmakaraṃ",
  "SA05n823:26": "malayāgiricandanadhūparatim |",
  "SA05n823:27": "kamalotpalapāṭalidāmadharaṃ",
  "SA05n823:28": "praṇamāmyatha pāṭalivṛddhikaram || 7 ||",
  "SA05n823:29": "jvararogavivarjitakuṣṭhaharaṃ",
  "SA05n823:30": "bahubodhimanāghanabhadrakaram |",
  "SA05n823:31": "navadurgatināśanamārgapradaṃ",
  "SA05n823:32": "karuṇā-tathatādvayaviśvapatim || 8 ||",
  "SA05n823:33": "śrīāryāvalokiteśvarasya potalakāṣṭakaṃ samāptam |"
}