{
    "870:0": "buddhastotram",
    "870:1": "om namo buddhāya",
    "870:2": "namo'stu buddhāya viśuddhabodhaye",
    "870:3": "viśuddhadharmapratibhāsabuddhaye |",
    "870:4": "saddharmapuṇyopagatānubuddhaye",
    "870:5": "bhavāgraśūnyāya viśuddhabuddhaye || 1 ||",
    "870:6": "aho aho buddhamanantatejasaṃ",
    "870:7": "aho aho sāgaramerugulmam |",
    "870:8": "aho aho buddhamanantagocaram",
    "870:9": "audumbaraṃ puṣpamivātidurlabham || 2 ||",
    "870:10": "aho mahākāruṇikastathāgataḥ",
    "870:11": "aho aho śākyakulasya ketuḥ |",
    "870:12": "aho praṇamyaḥ sa narendrasūryo",
    "870:13": "yenedṛśaṃ bhāṣitasūtramuttamam || 3 ||",
    "870:14": "anugrahārthaṃ sa hi sarvasattvān",
    "870:15": "saddharmacaryāmupadiśya nūnam |",
    "870:16": "śānteśvaraḥ śākyamunistathāgataḥ",
    "870:17": "sattvottamaḥ śāntapuraṃ praviṣṭaḥ || 4 ||",
    "870:18": "gambhīraśāntaṃ virajāsamādhi-",
    "870:19": "padaṃ praviṣṭe jinabuddhagocare |",
    "870:20": "śūnyāśca kāyāstvatha śrāvakāṇāṃ",
    "870:21": "śūnyā vihārā dvipadottamānām || 5 ||",
    "870:22": "te sarvadharmā prakṛtiśca śūnyā",
    "870:23": "sattvā hi śūnyā nahi jātu vidyate || 6 ||",
    "870:24": "nityaṃ ca nityaṃ ca jinaṃ smarāmi",
    "870:25": "nityaṃ ca śocāmi jinasya darśanam |",
    "870:26": "nityaṃ ca nityaṃ praṇidhiṃ karomi",
    "870:27": "saṃbuddhapūjyasya ca darśanārtham || 7 ||",
    "870:28": "sthāpyeha nityaṃ dharaṇīṣu jānu",
    "870:29": "śokābhitapto jinadarśanāya |",
    "870:30": "odantakāruṇyavināyakastva-",
    "870:31": "matīva tṛṣṇā sugatasya darśane || 8 ||",
    "870:32": "satāṃ varo yadvijahāra nityaṃ",
    "870:33": "dadāhi me darśanatoyaśītalam |",
    "870:34": "sattvāḥ satṛṣṇāstava rūpadarśane",
    "870:35": "prahlādayainān karuṇājalena || 9 ||",
    "870:36": "kāruṇyabhāvaṃ kuru nātha nāyaka",
    "870:37": "dadāhi me darśanaṃ saumyarūpam |",
    "870:38": "tvaṃ pāhi trātarjagadekadeśitā",
    "870:39": "śūnyāśca kāyāstvatha śrāvakāṇām || 10 ||",
    "870:40": "ākāśatulyā gaganasvabhāvā",
    "870:41": "māyāmarīcyodakacandrakāyāḥ |",
    "870:42": "sarve ca sattvāḥ sukhitasvabhāvā",
    "870:43": "bhavantu bho nāyaka tvatprasādāt || 11 ||",
    "870:44": "bodhisattvasamuccayānāma kuladevatāviracitaṃ",
    "870:45": "buddhastotraṃ samāptam ||"
}