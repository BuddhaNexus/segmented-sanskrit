{
  "SA01n778:0": "saptamo binduḥ",
  "SA01n778:1": "pratītyasamutpādaḥ",
  "SA01n778:2": "1 | dvādaśa pratyayāḥ |",
  "SA01n778:3": "avidyā saṃskārāḥ vijñānaṃ nāmarūpaṃ ṣaḍāyatanaṃ sparśaḥ vedanā tṛṣṇā upādānaṃ bhavaḥ jātiḥ jarāmaraṇaṃ ||",
  "SA01n778:4": "2 | ete dvādaśa pratyayā strividhā bhavanti |",
  "SA01n778:5": "kleśaḥ karma duḥkhaṃ ca ||",
  "SA01n778:6": "kleśa strividhaḥ |",
  "SA01n778:7": "avidyā tṛṣṇā upādānaṃ ca ||",
  "SA01n778:8": "dvividhaṃ karma |",
  "SA01n778:9": "saṃskārāḥ bhavaśca ||",
  "SA01n778:10": "saptavidhaṃ duḥkhaṃ |",
  "SA01n778:11": "vijñānaṃ nāmarūpaṃ ṣaḍāyatanaṃ sparśaḥ vedanā jātirjarāmaraṇaṃ ca ||",
  "SA01n778:12": "dvau (pratyayau)",
  "SA01n778:13": "atītasaṃgṛhītau |",
  "SA01n778:14": "dvau (pratyayau)",
  "SA01n778:15": "anāgatasaṃgṛhītau |",
  "SA01n778:16": "aṣṭau (pratyayāḥ)",
  "SA01n778:17": "pratyutpannasaṃgṛhītāḥ ||",
  "SA01n778:18": "3 | kleśa karmahetuḥ |",
  "SA01n778:19": "karma duḥkhahetuḥ |",
  "SA01n778:20": "duḥkhaṃ kleśahetuḥ |",
  "SA01n778:21": "kleśaḥ kleśahetuḥ |",
  "SA01n778:22": "kleśaḥ karmahetuḥ |",
  "SA01n778:23": "karma duḥkhahetuḥ |",
  "SA01n778:24": "duḥkhaṃ duḥkhahetuḥ |",
  "SA01n778:25": "ityevaṃ krameṇotpādaḥ ||",
  "SA01n778:26": "4 | atītāvidyāsahakṛtasarvakleśasaṃprayuktā bhavatyavidyā ||",
  "SA01n778:27": "etāṃ pratītya kriyate karma |",
  "SA01n778:28": "karmakaraṇād bhavati lokaphalaṃ |",
  "SA01n778:29": "ityucyate saṃskāraḥ ||",
  "SA01n778:30": "etān saṃskārān pratītya saṃkliṣṭaṃ cittaṃ labhate kāyendriyavijñānāni |",
  "SA01n778:31": "tathāhi |",
  "SA01n778:32": "vatsaḥ vijānāti mātaraṃ |",
  "SA01n778:33": "iti vijñānaṃ ||",
  "SA01n778:34": "etadvijñānasahajāścatvāro&#39;",
  "SA01n778:35": "rūpiskaṃdhāḥ (tat-)",
  "SA01n778:36": "saṃtānajaṃ cāpi rūpam - iti nāmarūpaṃ ||",
  "SA01n778:37": "cakṣurādīndriyagocarāśrayaṃ bhavati ṣaḍāyatanaṃ ||",
  "SA01n778:38": "indriyaviṣayavijñānānāṃ saṃnipātād bhavati sparśaḥ ||",
  "SA01n778:39": "sparśājjāyate vedanā - iti vedanā ||",
  "SA01n778:40": "vedanāsaṃgena bhavati tṛṣṇā ||",
  "SA01n778:41": "tṛṣṇāyāḥ kleśeṇodyama ityupādānaṃ ||",
  "SA01n778:42": "udyamena karoti karmeti bhavaḥ ||",
  "SA01n778:43": "anāgataphalamucyate jātiḥ ||",
  "SA01n778:44": "jātirutpādayati duḥkhamaparimeyamiti jarāmaraṇaṃ ||",
  "SA01n778:45": "5 | punaḥ khalu na jānātyavidyā catvāri satyāni |",
  "SA01n778:46": "adhyātmabahirdhā dharmān atītānāgatapratyutpannabuddhadharmān sarvahetupratyayān evaṃbhūtān vividhān satyadharmān na jānātītyucyate&#39;vidyā ||",
  "SA01n778:47": "6 | mūḍhaḥ pudgala ścarati trividhāṃ caryāṃ |",
  "SA01n778:48": "śubhacaryāṃ aśubhacaryāṃ akṣobhyacaryāṃ ||",
  "SA01n778:49": "katamā śubhācaryā |",
  "SA01n778:50": "yayā prāpyate kuśalaphalaṃ ||",
  "SA01n778:51": "katamā aśubhacaryā |",
  "SA01n778:52": "yayā prāpyate&#39;",
  "SA01n778:53": "kuśalaphalaṃ ||",
  "SA01n778:54": "katamā akṣobhyacaryā |",
  "SA01n778:55": "rūpārūpadhātūpapattiḥ ||",
  "SA01n778:56": "7 | punaḥ khalu dānaṃ śīlaṃ dhyānaṃ (nāma śubhacaryā) ||",
  "SA01n778:57": "dānaṃ katamat |",
  "SA01n778:58": "dānaṃ dvividhaṃ |",
  "SA01n778:59": "prathamamāmiṣadānaṃ dvitīyaṃ dharmadānaṃ ||",
  "SA01n778:60": "paṃcavidhaṃ śīlagrahaṇaṃ |",
  "SA01n778:61": "gṛhṇāti cec chīlaṃ yāvadantaṃ |",
  "SA01n778:62": "vyavadānayatyakuśalacittamalam |",
  "SA01n778:63": "sarvadā smṛtaḥ,",
  "SA01n778:64": "saṃprajanyaḥ,",
  "SA01n778:65": "na gaveṣayanti lokaphalam ||",
  "SA01n778:66": "dhyānaṃ (nāma)",
  "SA01n778:67": "aśucibhāvanā ānāpānādismṛtiḥ sarvasāsravakuśalasamādhidharmāḥ ||",
  "SA01n778:68": "iti śubhacaryā ||",
  "SA01n778:69": "8 | aśubhacaryā (punaḥ)katamā |",
  "SA01n778:70": "trīṇyakuśalamūlāni daśakuśalakarmapathādayo vividhāni pāpānītyucyate&#39;",
  "SA01n778:71": "śubhacaryā ||",
  "SA01n778:72": "akṣobhyācaryā (punaḥ)katamā |",
  "SA01n778:73": "prathamadhyānād yāvat naiva saṃjñānāsaṃjñā(yatana)",
  "SA01n778:74": "samādhirityucyate&#39;",
  "SA01n778:75": "kṣobhyacaryā ||",
  "SA01n778:76": "9 | traihetukasāsravavijñānamupādāya prathamād yāvat saptamaṃ bhavam - ityucyate vijñānaṃ |",
  "SA01n778:77": "vijñānād bhavati nāmarūpaṃ |",
  "SA01n778:78": "vedanāsaṃjñāsaṃskāravijñānaskaṃdhā iti nāma |",
  "SA01n778:79": "catvāri mahābhūtāni tatkṛtaṃ rūpaṃ ceti rūpaṃ |",
  "SA01n778:80": "nāmarūpājjāyate ṣaḍāyatanaṃ |",
  "SA01n778:81": "ṣaḍāyatanājjāyate sparśaḥ |",
  "SA01n778:82": "sparśaḥ ṣaḍvidhaḥ kāyotthapratigha-mānasotthādhivacana (-bhedena)",
  "SA01n778:83": "dviprakāraḥ |",
  "SA01n778:84": "ṣaḍvijñānavikalpahetoḥ ṣaḍvidhaḥ sparśaḥ ||"
}