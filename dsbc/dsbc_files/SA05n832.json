{
  "SA05n832:0": "daśabhūmīśvaro nāma mahāyānasūtraratnarājastotram",
  "SA05n832:1": "śamadamaniratānāṃ śāntadāntāśayānāṃ",
  "SA05n832:2": "khagapathasadṛśānāmantarīkṣasamānām |",
  "SA05n832:3": "khilamalavidhutanāṃ mārgajñānasthitānāṃ",
  "SA05n832:4": "śṛṇuta varaviśeṣaṃ bodhisattvāṃśca śreṣṭhān || 1 ||",
  "SA05n832:5": "kuśalasatasahasraṃ saṃcitaṃ kalpakoṭayā",
  "SA05n832:6": "subuddhaśatasahasraṃ pūjayitvā gṛhītam |",
  "SA05n832:7": "pratyekajinavarānvai pūjayitvā tvanantān",
  "SA05n832:8": "sakalajagahitāya jāyate bodhicittam || 2 ||",
  "SA05n832:9": "uta tapatapitānāṃ kṣāntipāraṃgatānāṃ",
  "SA05n832:10": "hṛtaśritacaritānāṃ puṇyajñānodgatānām |",
  "SA05n832:11": "vipulagatimatīnāṃ puṇyajñānāśayānāṃ",
  "SA05n832:12": "daśabalasamatulyaṃ jāyate bodhicittam || 3 ||",
  "SA05n832:13": "pramuditasumatīnāṃ dānadharme ratānāṃ",
  "SA05n832:14": "sakalajagahitārthaṃ nityamevodyatānām |",
  "SA05n832:15": "jinaguṇaniratānāṃ sattvarakṣāvratānāṃ",
  "SA05n832:16": "tribhuvanahitakartṛ jāyate bodhicittam || 4 ||",
  "SA05n832:17": "akuśalaviratānāṃ śuddhamārge sthitānāṃ",
  "SA05n832:18": "vrataniyamaratānāṃ śāntasaumyendriyāṇām |",
  "SA05n832:19": "jinaśaraṇagatānāṃ bodhicaryāśayānāṃ",
  "SA05n832:20": "tribhuvanahitasādhyaṃ jāyate bodhicittam || 5 ||",
  "SA05n832:21": "anugatakuśalānāṃ kṣāntisvārasyabhājāṃ",
  "SA05n832:22": "viditaguṇarasānāṃ tyaktamānotsavānām |",
  "SA05n832:23": "nihitaśubhamatīnāṃ dānasaumyāśayānāṃ",
  "SA05n832:24": "sakalahitavidhānaṃ jāyate bodhicittam || 6 ||",
  "SA05n832:25": "pracalati śubhakārye dhīravīryāḥ sahāyā",
  "SA05n832:26": "nikhilajanahitārthaṃ prodyate mānasiṃhaḥ |",
  "SA05n832:27": "avirataguṇasādhyā nirjitakleśasaṃdhā",
  "SA05n832:28": "jhaṭiti manasi teṣāṃ jāyate bodhicittam || 7 ||",
  "SA05n832:29": "susamavahitacittā dhvastamohāndhakārā",
  "SA05n832:30": "vigalitamadamānā tyaktasaṃkliṣṭamārgāḥ |",
  "SA05n832:31": "samasukhaniratā ye tyaktasaṃsārasaṃgā",
  "SA05n832:32": "jhaṭiti manasi teṣāṃ jāyate bodhicittam || 8 ||",
  "SA05n832:33": "vimalakhasamacittā jñānavijñānavijñā",
  "SA05n832:34": "nihatanamucimārā vāntakleśābhimānāḥ |",
  "SA05n832:35": "jinapadaśaraṇasthā labdhatattvārthakāye",
  "SA05n832:36": "sapadi manasi teṣāṃ jāyate bodhicittam || 9 ||",
  "SA05n832:37": "tribhuvanaśivasādhyopāyavijñānadhīrāḥ",
  "SA05n832:38": "karibalaparihāropāyavidṛddhimantaḥ |",
  "SA05n832:39": "sugataguṇasamīhā ye ca puṇyānurāgā",
  "SA05n832:40": "sapadi manasi teṣāṃ jāyate bodhicittam || 10 ||",
  "SA05n832:41": "tribhuvanahitakāmā bodhisaṃbhārapūrtyai",
  "SA05n832:42": "praṇihitamanasā ye duṣkare'pi caranti |",
  "SA05n832:43": "avirataśubhakarma prodyatāṃ bodhisattvāḥ",
  "SA05n832:44": "sapadi manasi teṣāṃ jāyate bodhicittam || 11 ||",
  "SA05n832:45": "daśabalaguṇakāmā bodhicaryānuraktā",
  "SA05n832:46": "vijitakaribalaughāstyaktamānānuṣaṅgāḥ |",
  "SA05n832:47": "anugataśubhamārgā labdhadharmārthakāmā",
  "SA05n832:48": "jhaṭiti manasi teṣāṃ jāyate bodhicittam || 12 ||",
  "SA05n832:49": "iti gaṇitaguṇāṃśā bodhicaryāścarantu",
  "SA05n832:50": "jinapadapraṇidhānā satsamṛddhiṃ labhantu |",
  "SA05n832:51": "tribhuvanapariśuddhā bodhicittaṃ labhantu",
  "SA05n832:52": "triśaraṇapariśuddhā bodhisattvā bhavantu || 13 ||",
  "SA05n832:53": "daśapāramitāḥ pūrya daśabhūmīśvaro bhavet |",
  "SA05n832:54": "bhūyo'pi kathyate hyetacchṛṇutaivaṃ samāsataḥ || 14 ||",
  "SA05n832:55": "bodhicittaṃ yadāsādya saṃpradānaṃ karoti yaḥ |",
  "SA05n832:56": "tadā pramuditāṃ prāpto jambūdvīpeśvaro bhavet || 15 ||",
  "SA05n832:57": "tatrasthaḥ pālayet sattvān yathecchapratipādanaiḥ |",
  "SA05n832:58": "svayaṃ dāne pratiṣṭhitvā parāṃścāpi niyojayet || 16 ||",
  "SA05n832:59": "sarvān bodhau pratiṣṭhāpya saṃpūrṇadānapāragaḥ |",
  "SA05n832:60": "etatkarmānubhāvena saṃvaraṃ samupācaret || 17 ||",
  "SA05n832:61": "sampacchīlaṃ samādhāya saṃvaraṃ kuśalī bhavet |",
  "SA05n832:62": "tataḥ sa vimalāṃ prāptaścāturdvīpeśvaro bhavet || 18 ||",
  "SA05n832:63": "tatrasthaḥ pālayet sattvānakuśalaṃ nivārayet |",
  "SA05n832:64": "svayaṃ śīle pratiṣṭhitvā parāṃścāpi niyojayet || 19 ||",
  "SA05n832:65": "sarvān bodhau pratiṣṭhāpya sampūrṇakuśalī bhavet |",
  "SA05n832:66": "etaddharmavipākena kṣāntivratamupāśrayet || 20 ||",
  "SA05n832:67": "samyak kṣāntivrataṃ dhṛtvā kṣāntibhṛt kuśalī bhavet |",
  "SA05n832:68": "tataḥ prābhākarīṃ prāptastrayastriṃśādhipo bhavet || 21 ||",
  "SA05n832:69": "tatrasthaḥ pālayet satvān kleśamārganivāraṇaiḥ |",
  "SA05n832:70": "svayaṃ kṣāntivrate sthitvā parāṃścāpi niyojayet || 22 ||",
  "SA05n832:71": "sattvān bodhau pratiṣṭhāpya śāntipāraṃgato bhavet |",
  "SA05n832:72": "etatpuṇyavipākena vīryabalamupāśrayet || 23 ||",
  "SA05n832:73": "samyag vīryaṃ samādhāya vīryabhṛtkuśalī bhavet |",
  "SA05n832:74": "tataścārciṣmatīṃ prāpya sudhāmādhipatirbhavet || 24 ||",
  "SA05n832:75": "tatrasthaḥ pālayan sarvān kudṛṣṭīḥ saṃnivārayet |",
  "SA05n832:76": "samyagdṛṣṭau pratiṣṭhāya bodhayitvā prayatnataḥ || 25 ||",
  "SA05n832:77": "svayaṃ dhyānavrate sthitvā parāṃścāpi niyojayet |",
  "SA05n832:78": "sarvān bodhau pratiṣṭhāpya dhyānapāraṃgato bhavet || 26 ||",
  "SA05n832:79": "etatpuṇyavipākena dhyānapāraṃ samārabhet |",
  "SA05n832:80": "sarvakleśān vinirjitya samādhisusthito bhavet || 27 ||",
  "SA05n832:81": "samyagdhyānaṃ samādhāya samādhikuśalī bhavet |",
  "SA05n832:82": "tataḥ sudurjayāṃ prāptaḥ sa tuṣitādhipo bhavet || 28 ||",
  "SA05n832:83": "tatrasthaḥ pālayetsattvāṃstīrthyamārganivāraṇaiḥ |",
  "SA05n832:84": "sattvadharmaṃ pratiṣṭhāpya bodhayitvā prayatnataḥ || 29 ||",
  "SA05n832:85": "svayaṃ dhyānavrate sthitvā parāṃścāpi niyojayet |",
  "SA05n832:86": "sarvān bodhau pratiṣṭhāpya dhyānapāraṃgato bhavet || 30 ||",
  "SA05n832:87": "etatpuṇyavipākena prajñāvratamupāśrayet |",
  "SA05n832:88": "sarvānmārān vinirjitya prajñābhijñāsamṛddhimān || 31 ||",
  "SA05n832:89": "samyak prajñāṃ samādhāya svābhijñākuśalī bhavet |",
  "SA05n832:90": "tataścābhimukhīṃ prāptaḥ sunirmitādhipo bhavet || 32 ||",
  "SA05n832:91": "tatrasthaḥ pālayet sattvānabhimānanivāraṇaiḥ |",
  "SA05n832:92": "śūnyatāṃ supratiṣṭhāpya bodhayitvā prayatnataḥ || 33 ||",
  "SA05n832:93": "svayaṃ prajñāvrate sthitvā parāṃścāpi niyojayet |",
  "SA05n832:94": "sarvān bodhau pratiṣṭhāpya prajñāpāraṃgato bhavet || 34 ||",
  "SA05n832:95": "etatpuṇyavipākaiśca samupāyavrataṃ caret |",
  "SA05n832:96": "sarvaduṣṭān vinirjitya saddharmakuśalī sudhīḥ || 35 ||",
  "SA05n832:97": "samupāyavidhānena sattvān bodhau niyojayet |",
  "SA05n832:98": "tato dūraṅgamāṃ prāpto vaśavartīśvaro bhavet || 36 ||",
  "SA05n832:99": "tatrasthaḥ pālayetsattvānabhisamayabodhanaiḥ |",
  "SA05n832:100": "bodhisattvaniyāmeṣu pratiṣṭhāya prabodhayet || 37 ||",
  "SA05n832:101": "tatropāye svayaṃ sthitvā parāṃścāpi niyojayet |",
  "SA05n832:102": "sarvān bodhau pratiṣṭhāpya upāyapārago bhavet || 38 ||",
  "SA05n832:103": "etatpuṇyānubhāvaśca supraṇidhīnupāśrayet |",
  "SA05n832:104": "mithyādṛṣṭiṃ vinirjitya samyagdṛṣṭiḥ kṛto budhaiḥ || 39 ||",
  "SA05n832:105": "supratiṣṭhitacittena samyagbodhau pratiṣṭhitaḥ |",
  "SA05n832:106": "tataścāpyacalāṃ prāpto buddhayā sāhasrikādhipaḥ || 40 ||",
  "SA05n832:107": "tatrasthaḥ pālayetsattvān tripānaṃ saṃpibet śanaiḥ |",
  "SA05n832:108": "lokadhātau parijñāne pratiṣṭhāpya prabodhayet || 41 ||",
  "SA05n832:109": "supraṇidhau svayaṃ sthitvā parāṃścāpi niyojayen |",
  "SA05n832:110": "sarvān bodhau pratiṣṭhāpya prāṇiṣu pārago bhavet || 42 ||",
  "SA05n832:111": "etatpuṇyānusāraiśca balavratamupāśrayet |",
  "SA05n832:112": "sarvaduṣṭān vinirjitya sambodhikṛtaniścayaḥ || 43 ||",
  "SA05n832:113": "samyagyatnasamutsāhaiḥ sarvatīrthyān vinirjayet |",
  "SA05n832:114": "tataḥ sādhumatīṃ prāpto mahābrahmā bhavet kṛtī || 44 ||",
  "SA05n832:115": "tatrasthaḥ pālayan sattvān buddhayānopadeśanaiḥ |",
  "SA05n832:116": "sattvāsamaparijñāne samyagbodhau prabodhayet || 45 ||",
  "SA05n832:117": "svayaṃ bale pratiṣṭhitvā parāṃścāpi niyojayet |",
  "SA05n832:118": "sarvān bodhau pratiṣṭhāpya balapāraṃgato bhavet || 46 ||",
  "SA05n832:119": "etatpuṇyavipākaiśca jñānavratamupāśrayet |",
  "SA05n832:120": "caturmārān vinirjitya bodhisattvaguṇākaraḥ || 47 ||",
  "SA05n832:121": "samyagjñānaṃ samādhāya saddharmakuśalo bhavet |",
  "SA05n832:122": "dharmameghāṃ tataḥ prāpto maheśvaro bhavet kṛtī || 48 ||",
  "SA05n832:123": "tatrasthaḥ pālayan sarvān sarvākārānubodhanaiḥ |",
  "SA05n832:124": "sarvākāravare jñāne pratiṣṭhāpya prabodhayet || 49 ||",
  "SA05n832:125": "svayaṃ jñāne pratiṣṭhitvā parāṃścāpi niyojayet |",
  "SA05n832:126": "sarvān bodhau pratiṣṭhāpya jñānapāraṃgato bhavet || 50 ||",
  "SA05n832:127": "etatpuṇyānubhāvaiśca daśabhūmīśvaro jinaḥ |",
  "SA05n832:128": "sarvākāraguṇādhāraḥ sarvajño dharmalābhavit || 51 ||",
  "SA05n832:129": "iti matvā bhuvabhiśca sambuddhapadalabdhaye |",
  "SA05n832:130": "daśapāramitārūpe caritavyaṃ samāhitaiḥ || 52 ||",
  "SA05n832:131": "tathā bodhiṃ śivāṃ prāpya caturmārān vinirjayet |",
  "SA05n832:132": "sarvān bodhau pratiṣṭhāpya nirvṛtiṃ samavāpsyatha || 53 ||",
  "SA05n832:133": "etajjñātvā paricchāyāṃ caradhvaṃ bodhiśāsane |",
  "SA05n832:134": "nirvidhnaṃ bodhimāsādya labhadhvaṃ saugataṃ padam || 54 ||",
  "SA05n832:135": "etāstā khalvāha jinaputro daśabodhisattvabhūmayaḥ samāsato nirdiṣṭāḥ sarvākāravaropetāḥ sarvajñānānugatā draṣṭavyāḥ |",
  "SA05n832:136": "tasyāṃ velāyāmayaṃ trisāhasralokadhātuṣaḍvikāraṃ prākampata vividhāni ca puṇyāni viyatto nyapatan |",
  "SA05n832:137": "divyamānuṣakāṇi ca bhūtāni saṃpravāditānyabhūvan,",
  "SA05n832:138": "anumodanāṃśagena ca yāvadakaniṣṭhabhuvanaṃ vijñaptamabhūt ||",
  "SA05n832:139": "śrībodhisattvacaryāprasthānād daśabhūmīśvaro nāma",
  "SA05n832:140": "mahāyānasūtraratnarājastotraṃ samāptam |"
}