{
  "SA20n1367:0": "aṣṭamo'dhikāraḥ",
  "SA20n1367:1": "bodhisattvaparipāke saṃgrahaḥ ślokaḥ |",
  "SA20n1367:2": "rūciḥ prasādaḥ praśamo 'nukampanā",
  "SA20n1367:3": "kṣamātha medhā prabalatvameva ca |",
  "SA20n1367:4": "ahāryatāṅgaiḥ samupetatā bhṛśaṃ",
  "SA20n1367:5": "jinātmaje tatparipākalakṣaṇam ||1 ||",
  "SA20n1367:6": "rūcirmahāyānadeśanādharme,",
  "SA20n1367:7": "prasādastaddeśike,",
  "SA20n1367:8": "praśamaḥ kleśānām,",
  "SA20n1367:9": "anukampā sattveṣu,",
  "SA20n1367:10": "kṣamā duṣkaracaryāyāṃ,",
  "SA20n1367:11": "medhā grahaṇadhāraṇaprativedheṣu,",
  "SA20n1367:12": "prabalatvamadhigame,",
  "SA20n1367:13": "ahāryatā māraparapravādibhiḥ,",
  "SA20n1367:14": "prāhāṇikāṅgaiḥ samanvāgatatvam |",
  "SA20n1367:15": "bhṛśamiti rūcyādīnāmadhimātratvaṃ darśayati |",
  "SA20n1367:16": "eṣa samāsena bodhisattvānāṃ navaprakāra ātmaparipāko veditavyaḥ |",
  "SA20n1367:17": "rūciparipākamārabhya ślokaḥ |",
  "SA20n1367:18": "sumitratāditrayamugravīryatā parārdhaniṣṭhottamadharmasaṃgrahaḥ |",
  "SA20n1367:19": "kṛpālusaddharmamahāparigrahe mataṃ hi samyakparipākalakṣaṇam ||2 ||",
  "SA20n1367:20": "sumitratāditrayaṃ satpuruṣasaṃsevā saddharmaśravaṇaṃ yoniśomanasikāraśca |",
  "SA20n1367:21": "ugravīryatā adhimātro vīryārambhaḥ |",
  "SA20n1367:22": "parārdhaniṣṭhā sarvācintyasthānanirvicikitsatā |",
  "SA20n1367:23": "uttamadharmasaṃgraho mahāyānadharmarakṣā,",
  "SA20n1367:24": "tatpratipannānāmupadravebhyo rakṣaṇāt |",
  "SA20n1367:25": "bodhisattvasya mahāyānadharmaparigrahamadhikṛtyedaṃ rūciparipākalakṣaṇaṃ veditavyam |",
  "SA20n1367:26": "yena kāraṇena paripacyate sumitratāditrayeṇa |",
  "SA20n1367:27": "yaśca tasyāḥ paripāka ugravīryaparārdhaniṣṭhāyuktaḥ svabhāvaḥ |",
  "SA20n1367:28": "yatkarma cottamadharmasaṃgrahakaraṇāttadetena paridīṣitam |",
  "SA20n1367:29": "prasādaparipākamārabhya ślokaḥ |",
  "SA20n1367:30": "guṇajñatāthāśusamādhilābhitā",
  "SA20n1367:31": "phalānubhūtirmanaso'dhyabheda[dya ?]tā |",
  "SA20n1367:32": "jīnātmaje śāstari saṃprapattaye",
  "SA20n1367:33": "mataṃ hi samyakparipākalakṣaṇam ||3 ||",
  "SA20n1367:34": "tatparipāko'pi kāraṇataḥ svabhāvataḥ karmataśca paridīpitaḥ |",
  "SA20n1367:35": "guṇajñatā ityapi sa bhagavāṃstathāgata iti vistareṇa kāraṇam |",
  "SA20n1367:36": "avetyaprabhāva[sāda]lābhādabhedyacittatā svabhāvaḥ |",
  "SA20n1367:37": "āśusamādhilābhastatphalasya cābhijñādikasya pratyanubhavanaṃ karma |",
  "SA20n1367:38": "praśamaparipākamārabhya ślokaḥ |",
  "SA20n1367:39": "susaṃvṛtiḥ kliṣṭavitarkavarjanā",
  "SA20n1367:40": "nirantarāyo'tha śubhābhirāmatā |",
  "SA20n1367:41": "jinātmaje kleśavinodanāyatan-",
  "SA20n1367:42": "mataṃ hi samyakparipākalakṣaṇam ||4 ||",
  "SA20n1367:43": "kleśavinodanā bodhisattvasya praśamaḥ |",
  "SA20n1367:44": "tatparipāko 'pi kāraṇataḥ svabhāvataḥ karmataśca paridīpitaḥ |",
  "SA20n1367:45": "indriyāṇāṃ smṛtisaṃprajanyābhyāṃ susaṃvṛtiḥ kāraṇam |",
  "SA20n1367:46": "kliṣṭavitarkavarjanā svabhāvaḥ |",
  "SA20n1367:47": "pratipakṣabhāvanāyāṃ nirantarāyatvaṃ kuśalābhirāmatā ca karma |",
  "SA20n1367:48": "kṛpāparipākalakṣaṇamadhikṛtya ślokaḥ |",
  "SA20n1367:49": "kṛpā prakṛtyā paraduḥkhadarśanaṃ",
  "SA20n1367:50": "nihīnacittasya ca saṃpravarjanam |",
  "SA20n1367:51": "viśeṣagatvaṃ jagadagrajanmatā",
  "SA20n1367:52": "parānukampāparipākalakṣaṇam ||5 ||",
  "SA20n1367:53": "svaprakṛtyā ca gotreṇa paraduḥkhadarśanena nihīnayānaparivarjanatayā ca paripacyata itikāraṇam |",
  "SA20n1367:54": "viśeṣagāmitvaṃ paripākavṛddhigamanāt svabhāvaḥ |",
  "SA20n1367:55": "sarvalokaśreṣṭhātmabhāvatā karma avinivartanīyabhūmau |",
  "SA20n1367:56": "kṣāntiparipākalakṣaṇamārabhya ślokaḥ |",
  "SA20n1367:57": "ghṛtiḥ prakṛtyā pratisaṃkhyabhāvanā",
  "SA20n1367:58": "suduḥkhaśītādyadhivāsanā sadā |",
  "SA20n1367:59": "viśeṣagāmitvaśubhābhirāmatā",
  "SA20n1367:60": "mataṃ kṣamāyāḥ paripākalakṣaṇam ||6 ||",
  "SA20n1367:61": "dhṛtiḥ sahanaṃ kṣāntiriti paryāyāḥ tatatparipāke gotraṃ pratisaṃkhyānaṃ bhāvanā ca kāraṇam |",
  "SA20n1367:62": "tīvrāṇāṃ śītādiduḥkhānāmadhivāsanāsvabhāvaḥ |",
  "SA20n1367:63": "kṣamasya viśeṣagāmitvaṃ kuśalābhirāmatā ca karma |",
  "SA20n1367:64": "medhāparipākamārabhya ślokaḥ |",
  "SA20n1367:65": "vipākaśuddhiḥ śravaṇādyamoṣatā",
  "SA20n1367:66": "praviṣṭatā sūktadurūktayostathā |",
  "SA20n1367:67": "smṛtermahābuddhyudaye ca yogyatā",
  "SA20n1367:68": "sumedhatāyāḥ paripākalakṣaṇam ||7 ||",
  "SA20n1367:69": "tatra medhānukūlā vipākaviśuddhiḥ kāraṇam |",
  "SA20n1367:70": "śrutacintitabhāvitacirakṛtacirabhāṣitānāmasaṃmoṣatā subhāṣitadurbhāṣitārthasupraviṣṭatā ca smṛtermedhāparipākasvabhāvaḥ |",
  "SA20n1367:71": "lokottaraprajñotpādanayogyatā karma |",
  "SA20n1367:72": "balavatvapratilambhaparipākamārabhya ślokaḥ |",
  "SA20n1367:73": "śubhadvayena dvayadhātupuṣṭatā phalodaye cāśrayayogyatā parā |",
  "SA20n1367:74": "manorathāptirjagadagrabhūtatā balopalambhe paripākalakṣaṇam ||8 ||",
  "SA20n1367:75": "tatra puṇyajñānadvayena tasya puṇyajñānadvayasya bījapuṣṭatā tatparipāke kāraṇam |",
  "SA20n1367:76": "adhigamaṃ pratyāśrayayogyatā tatparipākasvabhāvaḥ |",
  "SA20n1367:77": "manorathasaṃpattirjagadagrabhūtatā ca karma |",
  "SA20n1367:78": "ahāryatāparipākamārabhya ślokaḥ |",
  "SA20n1367:79": "sudharmatāyuktivicāraṇāśayo",
  "SA20n1367:80": "viśeṣalābhaḥ parapakṣadūṣaṇam |",
  "SA20n1367:81": "punaḥ sadā māranirantarāyatā",
  "SA20n1367:82": "ahāryatāyāḥ paripākalakṣaṇam ||9 ||",
  "SA20n1367:83": "tatparipākasya saddharme yuktivicāraṇākṛta āśayaḥ kāraṇam |",
  "SA20n1367:84": "māranirantarāyatā svabhāvo yadā māro na punaḥ śankotyantarāyaṃ kartum |",
  "SA20n1367:85": "viśeṣādhigamaḥ parapakṣadūṣaṇaṃ ca karma |",
  "SA20n1367:86": "prāhāṇikāṅgasamanvāgamaparipākamadhikṛtya ślokaḥ |",
  "SA20n1367:87": "śubhācayo 'thāśrayayatnayogyatā",
  "SA20n1367:88": "vivekatodagraśubhābhirāmatā |",
  "SA20n1367:89": "jinātmaje hyaṅgasamanvaye puna-",
  "SA20n1367:90": "rmataṃ hi samyakparipākalakṣaṇam ||10 ||",
  "SA20n1367:91": "tatparipākasya kāraṇaṃ kuśalamūlopacayaḥ |",
  "SA20n1367:92": "āśrayasya vīryārambhakṣamatvaṃ svabhāvaḥ |",
  "SA20n1367:93": "vivekotkṛṣṭatā kuśalābhirāmatā ca karma |",
  "SA20n1367:94": "navavidhātmaparipākamāhātmyamārabhya ślokaḥ |",
  "SA20n1367:95": "iti navavidhavastupacitātmā",
  "SA20n1367:96": "paraparipācanayogyatāmupetaḥ |",
  "SA20n1367:97": "śubha[dharma]mayasatatapravardhitātmā",
  "SA20n1367:98": "bhavati sadā jagato 'grabandhubhūtaḥ ||11 ||",
  "SA20n1367:99": "dvividhaṃ tanmāhātmyam |",
  "SA20n1367:100": "paraparipāke pratiśaraṇatvam |",
  "SA20n1367:101": "satataṃ dharmakāyavṛddhiśca |",
  "SA20n1367:102": "tata eva jagato 'grabandhubhūtaḥ |",
  "SA20n1367:103": "sattvaparipākavibhāge ekādaśa ślokāḥ |",
  "SA20n1367:104": "vraṇe'pi bhojye paripāka iṣyate yathaiva tatsrāvaṇabhogayogyatā |",
  "SA20n1367:105": "tathāśraye'smindvayapakṣaśāntatā[tāṃ]tathopabhogatvasuśāntapakṣatā[muśantipavkatām] ||12 ||",
  "SA20n1367:106": "anena paripākasvabhāvaṃ darśayati |",
  "SA20n1367:107": "yathā vraṇasya srāvaṇayogyatā paripākaḥ |",
  "SA20n1367:108": "bhojanasya ca bhogayogyatā |",
  "SA20n1367:109": "evaṃ sattvānāmāśraye vraṇabhojanasthānīye srāvaṇasthānīyaṃ vipakṣaśamanam |",
  "SA20n1367:110": "bhogasthānīyaśca pratipakṣopabhogaḥ |",
  "SA20n1367:111": "tadyogyatā āśrayasya paripāka iti |",
  "SA20n1367:112": "vipakṣapratipakṣāvatra pakṣadvayaṃ veditavyam |",
  "SA20n1367:113": "dvitīyaślokaḥ |",
  "SA20n1367:114": "vipācanoktā paripācanā tathā",
  "SA20n1367:115": "paripācanā cāpyanupācanāparā |",
  "SA20n1367:116": "supācanā[cā]pyadhipācanā matā",
  "SA20n1367:117": "nipācanotpācananā ca dehiṣu ||13 ||",
  "SA20n1367:118": "anena paripākaprabhedaṃ darśayati |",
  "SA20n1367:119": "kleśavigamena pācananā [pācanā ?] vipācanā |",
  "SA20n1367:120": "sarvato yānatrayeṇa pācanā paripācanā |",
  "SA20n1367:121": "bāhyaparipākaviśiṣṭatvāt prakṛṣṭā pācanā prapācanā |",
  "SA20n1367:122": "yathāvineyadharmadeśanāttadanurūpā pācanā anupācanā |",
  "SA20n1367:123": "satkṛtya pācanā supācanā |",
  "SA20n1367:124": "adhigamena pācanā adhipācanā aviparītārthena |",
  "SA20n1367:125": "nityā pācanā nipācanā aparihāṇīyārthena |",
  "SA20n1367:126": "krameṇottarottarapācanā utpācanā |",
  "SA20n1367:127": "ityayamaṣṭaprakāraḥ pariparipākaprabhedaḥ |",
  "SA20n1367:128": "tṛtīyacaturthau ślokau |",
  "SA20n1367:129": "hitāśayeneha yathā jinātmajo",
  "SA20n1367:130": "vyavasthitaḥ sarvajagadvipācayan |",
  "SA20n1367:131": "tathā na mātā na pitā na bandhavaḥ",
  "SA20n1367:132": "suteṣu bandhuṣvapi suvyavasthitāḥ ||14 ||",
  "SA20n1367:133": "tathājano nātmani vatsalo mataḥ",
  "SA20n1367:134": "kuto'pi susnigdhaparāśraye jane |",
  "SA20n1367:135": "yathā kṛpātmā parasattvavatsalo",
  "SA20n1367:136": "hite sukhe caiva niyojanānmataḥ ||15 ||",
  "SA20n1367:137": "ābhyāṃ kiṃ darśayati |",
  "SA20n1367:138": "yādṛśenāśayena bodhisattvaḥ sattvānparipācayati tamāśayaṃ darśayati |",
  "SA20n1367:139": "mātāpitṛbāndhavāśayaviśiṣṭaṃ lokātmavātsalyaviśiṣṭaṃ ca hitasukhasaṃyojanāt |",
  "SA20n1367:140": "ātmavatsalastu loka ātmānaṃ hite ca sukhe ca saṃniyojayati |",
  "SA20n1367:141": "avaśiṣṭaiḥ ślokairyena prayogeṇa sattvānparipācayati taṃ pāramitā pratipattyā saṃdarśayati |",
  "SA20n1367:142": "yādṛśena dānena yathā sattvānparipācayati tadārabhya ślokaḥ |",
  "SA20n1367:143": "na bodhisattvasya śarīrabhogayoḥ pareṣvadeyaṃ punarasti sarvathā |",
  "SA20n1367:144": "anugraheṇa dvividhena pācayan paraṃ samairdānaguṇairna tṛpyate ||16 ||",
  "SA20n1367:145": "trividhena dānena pācayati |",
  "SA20n1367:146": "sarvasvaśarīrabhogadānena aviṣamadānena atṛptidānena ca |",
  "SA20n1367:147": "kathaṃ paripācayati dṛṣṭadharmasaṃparāyānugraheṇa |",
  "SA20n1367:148": "avighātenecchāparipūrṇāt [pūraṇāt] |",
  "SA20n1367:149": "anāgatena [tena] ca saṃgṛhya kuśalapratiṣṭhāpanāt |",
  "SA20n1367:150": "yādṛśena śīlena yathā satvānparipācayati tadārabhya ślokaḥ |",
  "SA20n1367:151": "sadāprakṛtyādhyavihiṃsakaḥ svayaṃ",
  "SA20n1367:152": "rato'pramatto'tra paraṃ niveśayan |",
  "SA20n1367:153": "paraṃparānugrahakṛdūdvidhā pare",
  "SA20n1367:154": "vipākaniṣyandaguṇena pācakaḥ ||17 ||",
  "SA20n1367:155": "pañcavidhena śīlena |",
  "SA20n1367:156": "dhruvaśīlena prakṛtiśīlena paripūrṇaśīlenādhyaviṃhiṃsakatvāt |",
  "SA20n1367:157": "paripūrṇo hyavihiṃsako 'dhyavihiṃsako daśakuśalakarmapathaparipūritaḥ |",
  "SA20n1367:158": "yathoktaṃ dvitīyāyāṃ bhūmau |",
  "SA20n1367:159": "adhigamaśīlena svayaṃratatayā nirantarāskhalitaśīlena cāpramattatayā |",
  "SA20n1367:160": "kathaṃ ca paripācayati |",
  "SA20n1367:161": "śīle saṃniveśanāt |",
  "SA20n1367:162": "dvidhānugrahakriyayā dṛṣṭadharme saṃparāye ca |",
  "SA20n1367:163": "saṃparāyānugrahaṃ pareṣu vipākaniṣyandaguṇābhyāṃ paraṃparayā karoti |",
  "SA20n1367:164": "tadvipākaniṣyandayoranyonyānukūlyenāvyavacchedāt |",
  "SA20n1367:165": "yādṛśyā kṣāntyā yathā sattvānparipācayati tadārabhya ślokaḥ |",
  "SA20n1367:166": "pare'pakāriṇyupakāribuddhimān",
  "SA20n1367:167": "pramarṣayannugramapi vyatikramam |",
  "SA20n1367:168": "upāyacittairapakāramarṣaṇaiḥ",
  "SA20n1367:169": "śubhe samādāpayate'pakāriṇaḥ ||18 ||",
  "SA20n1367:170": "apakāriṇi pare upakāribuddhyā pragāḍhāpakāramarṣaṇakṣāntyā paripācayati |",
  "SA20n1367:171": "upakāribuddhitvaṃ punaḥ kṣāntipāramitāparipūryānukūlyavṛttitā veditavyam |",
  "SA20n1367:172": "kathaṃ paripācayati |",
  "SA20n1367:173": "dṛṣṭadharmānugraheṇa cāpakāramarṣaṇāt |",
  "SA20n1367:174": "saṃparāyānugraheṇa copāyajñastairapakāramarṣaṇairāvarjyāpakāriṇāṃ kuśale samādāpanāt |",
  "SA20n1367:175": "yādṛśena vīryeṇa yathā sattvānparipācayati tadārabhya ślokaḥ |",
  "SA20n1367:176": "punaḥ sa yatnaṃ paramaṃ samāśrito",
  "SA20n1367:177": "na khidyate kalpasahasrakoṭibhiḥ |",
  "SA20n1367:178": "jinātmajaḥ sa[ttva]gaṇaṃ",
  "SA20n1367:179": "prapācayanparaikacittasya śubhasya kāraṇāt ||19 ||",
  "SA20n1367:180": "adhimātradīrghakālākhede vīryeṇa dīrghakālākheditvamanantasattvaparipācanāt |",
  "SA20n1367:181": "paraikacittasya kuśalasyārthe kalpasahasrakoṭibhirakhedāt |",
  "SA20n1367:182": "ata evoktaṃ bhavati yathā paripācayati |",
  "SA20n1367:183": "kuśalacittasaṃniyojanāt dṛṣṭadharmasaṃparāyānugraheṇeti |",
  "SA20n1367:184": "yādṛśena dhyānena yathā sattvānparipācayati tadārabhya ślokaḥ |",
  "SA20n1367:185": "vaśitvamāgamya manasyanuttaraṃ",
  "SA20n1367:186": "paraṃ samāvarjayate'tra śāsane |",
  "SA20n1367:187": "nihatya sarvāmavamānakāmatāṃ",
  "SA20n1367:188": "śubhena saṃvardhayate ca taṃ punaḥ ||20 ||",
  "SA20n1367:189": "prāptānuttaravaśitvena dhyānena nirāmiṣeṇa ca nihatasarvāvamānābhilāṣeṇa paripācayati |",
  "SA20n1367:190": "buddhaśāsane parasyāvarjanādāvarjitasya ca kuśaladharmasaṃvardhanāt paripācayati |",
  "SA20n1367:191": "yādṛśyā prajñayā yathā sattvānparipācayati tadārabhya ślokaḥ |",
  "SA20n1367:192": "sa tattvabhāvārthanaye suniścitaḥ karoti sattvānsuvinīta saṃśayān |",
  "SA20n1367:193": "tataśca te tajjinaśāsanādarād vivardhayante svaparaṃ guṇaiḥ śubhaiḥ ||21 ||",
  "SA20n1367:194": "sa bodhisattvastattvārthanaye cābhiprāyārthanaye ca suviniścitayā prajñayā paripācayati |",
  "SA20n1367:195": "kathaṃ paripācayati sattvānāṃ saṃśayavinayanāt |",
  "SA20n1367:196": "tataśca śāsanabahumānātteṣāmātmaparaguṇasaṃvardhakatvena |",
  "SA20n1367:197": "niya[ga]mena ślokaḥ |",
  "SA20n1367:198": "iti sugatigatau śubhatraye vā jagadakhilaṃ kṛpayā sa bodhisattvaḥ |",
  "SA20n1367:199": "tanuparamavimadhyamaprakārairvinayati lokasamānabhāvagatyā ||22 ||",
  "SA20n1367:200": "anena yatra ca vinayati,",
  "SA20n1367:201": "sugatigamane yānatraye vā |",
  "SA20n1367:202": "yacca vinayati,",
  "SA20n1367:203": "jagadakhilam |",
  "SA20n1367:204": "yena ca vinayati, kṛpayā |",
  "SA20n1367:205": "yaśca vinayati bodhisattvaḥ |",
  "SA20n1367:206": "yādṛśaiśca paripācanaprakārai tanuparamavimadhyamaprakāraiḥ |",
  "SA20n1367:207": "yāvantaṃ ca kālaṃ,",
  "SA20n1367:208": "tatparidīpanāt samāsena paripākamāhātmyaṃ darśayati |",
  "SA20n1367:209": "tatra tanuḥ prakāro'dhimukticaryābhūmau bodhisattvasya paramo'ṣṭāmyādiṣu vimadhyamaḥ saptasu veditavyaḥ |",
  "SA20n1367:210": "yāvallokasya bhāvastatsamānayā gatyā atyantamityarthaḥ |",
  "SA20n1367:211": " || mahāyānasūtrālaṃkāre paripākādhikāro'ṣṭamaḥ ||"
}