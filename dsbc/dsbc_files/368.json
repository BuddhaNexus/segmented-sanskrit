{
    "368:0": "5. sarvākāra sarvasattva prabodhana bodhicaryāvatāraṇa prakaraṇa",
    "368:1": "atha sarvanīvaraṇaviṣkambhī sugatātmajaḥ|",
    "368:2": "sāṃjalirbhagavantaṃ taṃ praṇatvā caivamabravīt||",
    "368:3": "bhagavansa mahāsattvo lokeśvara jagatprabhuḥ|",
    "368:4": "kadeha samupāgached draṣṭumicchāmi taṃ prabhum||",
    "368:5": "iti taduktamākarṇya bhagavān sa munīśvaraḥ|",
    "368:6": "viṣkambhinaṃ mahāsattvaṃ tamālokyaivamādiśat||",
    "368:7": "47",
    "368:8": "viṣkambhin sa mahāsattvo nāgacchediha sāṃpratam|",
    "368:9": "anyatra narake sattvānuddhartumabhigacchati||",
    "368:10": "sarvatrāpi svayaṃ gatvā saṃpaśyannarakāśritān|",
    "368:11": "sarvān sattvān samuddhṛtya preṣayati sukhāvatīm||",
    "368:12": "evaṃ sa sarvadā sattvān svayaṃ paśyan dine dine|",
    "368:13": "asaṃkhyeyān samuddhṛtya preṣayati sukhāvatīm||",
    "368:14": "evaṃ kurvan sa lokeśo bodhicaryāvrataṃ caran |",
    "368:15": "asaṃkhyapuṇyaratnādyaśrīsamṛddho virājate||",
    "368:16": "tasya puṇyamasaṃkhyeyamaprameyaṃ bahūttamam|",
    "368:17": "sarvairapi munīndraistatpramātuṃ naiva śakyate||",
    "368:18": "ityevaṃ sugataiḥ sarvaiḥ purākhyātaṃ mayā śrutam|",
    "368:19": "tadatrāhaṃ pravakṣyāmi śṛṇudhyaṃ yūyamādarāt||",
    "368:20": "tadyathābhūt purā śāstā śikhi nāma tathāgataḥ|",
    "368:21": "sarvajño'rhanmahābhijñoḥ dharmarājo munīśvaraḥ||",
    "368:22": "sarvavidyādhirājendraḥ saṃbuddhaḥ sugato jinaḥ|",
    "368:23": "mārajit sarvalokendrastraidhātukavināyakaḥ||",
    "368:24": "tadāsaṃ bodhisattvo'haṃ dānaśūro'bhidho gṛhī|",
    "368:25": "sadādānarato dhīraḥ sarvasattvahitārthabhṛt||",
    "368:26": "sadā sa śikhinastasya munīndrasya jagadguroḥ|",
    "368:27": "satkṛtya śraddhayā nityaṃ prābhajan samupasthitaḥ||",
    "368:28": "tadā tena munīndreṇa samākhyātaṃ mayā śrutam|",
    "368:29": "lokeśvarasya saddharmasādhanodbhavakauśalam||",
    "368:30": "iti tena munīndreṇa samāakhyātaṃ niśamya saḥ|",
    "368:31": "bodhisattvo mahāsattvo viṣkambhī caivamabravīt||",
    "368:32": "bhagavan kidṛśaṃ tasya lokeśasya mahātmanaḥ|",
    "368:33": "saddharmasādhanodbhūtaṃ kauśalaṃ bhavatā śrutam||",
    "368:34": "bhagavanstatsamākhyāya sarvānasmān prabodhaya|",
    "368:35": "sarvalokā ime śrutvā bhaveyustadguṇāratāḥ||",
    "368:36": "48",
    "368:37": "iti saṃprārthitaṃ tena śrutvāsau bhagavān jinaḥ|",
    "368:38": "sarvāṃllokān sabhāsīnān samālokyaivamādiśat||",
    "368:39": "yadā sa bhagavāṃcchāstā śikhī tathāgato jinaḥ|",
    "368:40": "sarvalokasabhāmadhye sasāṃghikaḥ samāśritaḥ||",
    "368:41": "ādimadhyāntakalyāṇaṃ saṃbodhiguṇasādhanam|",
    "368:42": "saddharmaṃ samupādeṣṭuṃ samārabhejjagaddhite||",
    "368:43": "tadā tasya mukhadvārānnānāvarṇāḥ suraśmayaḥ|",
    "368:44": "vinirgatā jagatsarvamavabhāsya pracerire||",
    "368:45": "kṛtvā sarvatra lokeṣu subhadrāṇi samantataḥ|",
    "368:46": "punarāgatya sā kāntistadāśrama upāgatāḥ||",
    "368:47": "śikhinaṃ taṃ mahābhijñaṃ dharmarājaṃ munīśvaram|",
    "368:48": "tridhā pradakṣiṇīkṛtya tanmukhājye samāviśat||",
    "368:49": "tatsatpuṇyaprabhāṃ dṛṭvā lokeśvaraḥ sa vismitaḥ|",
    "368:50": "amitābhaṃ jinaṃ natvā papracchaivaṃ samādarāt||",
    "368:51": "bhagavan kasya satpuṇyakāntiriyaṃ samāgatā|",
    "368:52": "tadbhavān samupādiśya saṃbodhayatu no guro||",
    "368:53": "iti taduktamākarṇya bhagavān so'mitaprabhaḥ|",
    "368:54": "lokeśvaraṃ mahāsattvaṃ tamālokyaivamādiśat||",
    "368:55": "kulaputra śikhī nāma saṃbuddho'rhanmunīśvaraḥ|",
    "368:56": "sarvajñastrigacchāstā dharmarājastathāgataḥ||",
    "368:57": "vihāre jetakodyāne samāśritaḥ sasāṃghikaḥ||",
    "368:58": "sarvalokasabhāmadhye samāsīnaḥ prabhāsayan|",
    "368:59": "saddharmaṃ samupādeṣṭuṃ prārambhaṃ kurute'dhunā||",
    "368:60": "tasyeyaṃ suprabhākāntirmukhadvārādvinirgatā|",
    "368:61": "sarvatra bhuvaneṣvevamavabhāsya pracaryate||",
    "368:62": "ihāpi samupāyātā bhāsayantī pracāritā|",
    "368:63": "parāvṛtya munestasya mukhe prāviśate'dhunā||",
    "368:64": "ityādiṣṭaṃ munīndreṇa lokeśvaraḥ prasāditaḥ|",
    "368:65": "amitābhaṃ munīndraṃ taṃ praṇatvaivamabhāṣata||",
    "368:66": "49",
    "368:67": "bhagavan dharmarājaṃ taṃ draṣṭumicchāmi sāṃpratam|",
    "368:68": "tattatrāhaṃ gatiṣyāmi tadājñāṃ dātumarhati||",
    "368:69": "iti saṃprārthitaṃ tena lokeśena niśamya saḥ|",
    "368:70": "amitābho munīndrastaṃ lokeśamevamabavrīt||",
    "368:71": "kulaputra munīndraṃstaṃ yadi draṣṭuṃ tvamicchasi|",
    "368:72": "gaccha madvacanenāpi kauśalyaṃ spraṣṭumarhasi||",
    "368:73": "padmaṃ samupasaṃsthāpya tasya paśyan sabhāmapi|",
    "368:74": "samupāśritya saddharmaṃ śrutvā gacchānumoditaḥ||",
    "368:75": "ityādiṣṭaṃ munīndreṇa śrutvā lokeśvaro mudā|",
    "368:76": "sāṃjalistaṃ jinaṃ natvā saṃbhāsayaṃstato'carat||",
    "368:77": "yadā tataḥ sukhāvatyāṃ saṃprasthitaḥ sa bhāsayan|",
    "368:78": "tadā sarvā mahī sābdhiḥ sāgādhā ca prakampitā||",
    "368:79": "pravarṣādviyato hemaratnamayaṃ mahotpalam|",
    "368:80": "nirutpātaṃ śubhotsāhaṃ prāvartata samantataḥ||",
    "368:81": "tadāśramamahodyāne kalpavṛkṣāḥ samutthitāḥ|",
    "368:82": "divyavastrasuvarṇādiratnālaṃkāralambitāḥ||",
    "368:83": "nānākusumavṛkṣāśca sugaṃdhipuṣpaśobhitāḥ|",
    "368:84": "anekafalavṛkṣāśca divyarasafalānatāḥ||",
    "368:85": "aṣṭāṃguṇasaṃpannajalapūrṇāḥ sarovarāḥ|",
    "368:86": "nānāpuṣpābhisaṃkīrṇāḥ prādurbhūtā manoramāḥ||",
    "368:87": "vividhapuṣpavarṇāṇi dravyāṇi vividhānyapi|",
    "368:88": "hemādidhāturatnāni vastrāṇi bhūṣaṇāni ca||",
    "368:89": "suvarṇasurasāsvādasaṃpannabhojanānyapi|",
    "368:90": "dhānyādivrīhijātāni pravarṣanta tadāśrame||",
    "368:91": "tatra ca saptaratnāni saṃjātāni jināśrame|",
    "368:92": "sarvā bhūmiśca sauvarṇā nirbhāsā saṃbabhau tadā||",
    "368:93": "tadā lokeśvara padmaṃ sahastrapatraṃ suvarṇikam|",
    "368:94": "saptaratnamayo jvālaṃ samādāya tataścaran||",
    "368:95": "50",
    "368:96": "evaṃ tatra subhadrāṇāṃ nimittaṃ saṃprakāśayan|",
    "368:97": "avabhāsya jagallokaṃ samālokya samantataḥ||",
    "368:98": "prāṇino duḥkhinaḥ sarvān samuddhṛtya prayatnataḥ|",
    "368:99": "bodhimārge pratiṣṭhāpya saṃpreṣayan sukhāvatīm||",
    "368:100": "sudhāraśmiṃ samutsṛjya saṃbhāsayan samantataḥ|",
    "368:101": "saṃbuddhaṃ śikhinaṃ tadvihāramupācarat||",
    "368:102": "tāni bhadranimittāni vilokya tatsabhāśritaḥ|",
    "368:103": "ratnapāṇirmahāsattva boddhisattvo'bhilokayan||",
    "368:104": "vismitaḥ sahasotthāya pustaḥ samupācarat|",
    "368:105": "udvahannuttarāsaṃgaṃ jānubhyāṃ bhuvi saṃsthitaḥ||",
    "368:106": "bhagavantaṃ munīndraṃ taṃ saṃbuddhaśikhinaṃ mudā|",
    "368:107": "kṛtāṃjalipuṭo natvā papracchaivaṃ samādarāt||",
    "368:108": "bhagavan kasya prabhākāntiriyamiha samāgatā|",
    "368:109": "mahadbhadranimittāni dṛśyante prodbhavāni ca||",
    "368:110": "bhagavanstatsamādiśya sarvānimān sabhāśritān|",
    "368:111": "vismayākulacittāntaḥ prabodhayitumarhati||",
    "368:112": "iti saṃprārthitaṃ tena śrutvā śikhī tathāgataḥ|",
    "368:113": "ratnapāṇiṃ mahāsattvaṃ taṃ paśyannevamādiśat||",
    "368:114": "ratnapāṇe mahāsattva dṛśyante yadihādhunā|",
    "368:115": "mahadbhadranimittāni saṃjātāni samantataḥ||",
    "368:116": "taddhetuṃ saṃpravakṣyāmi śṛṇudhvamidamādarāt|",
    "368:117": "yūyaṃ sarve prasīdantaḥ pratibudhyānumodata||",
    "368:118": "yaḥ śrīmāṃjagannātho bodhisattvo jinātmajaḥ|",
    "368:119": "sarvasaṃghādhipaḥ śāsta sarvalokādhipeśvaraḥ|",
    "368:120": "samantabhadrakārī sa āryāvalokiteśvaraḥ|",
    "368:121": "sattvān paśyan samuddhartuṃ sukhāvatyāṃ viniścaran||",
    "368:122": "puṇyaraśmiṃ samutsṛjya saṃbhāsayan samantataḥ|",
    "368:123": "śodhayaṃstrijagallokaṃ kṛtvā bhadraṃ samantataḥ|| 51",
    "368:124": "pāpino'pi durācārān sarvatra narakeṣvapi|",
    "368:125": "nimagnāṃstān samālokya samuddhṛtya samantata||",
    "368:126": "bodhayitvā prayatnena kṛtvā saddharmalālasān|",
    "368:127": "mameha darśanaṃ kartuṃ samupāgacchapi sāṃpratam|",
    "368:128": "tasyeyaṃ suprabhā kāntirbhāsayantī samāgatā||",
    "368:129": "īdṛgdranimittāni saṃjātāni samaṃtataḥ|",
    "368:130": "bhadraheturayaṃ tasya lokeśasyāgataḥ khalu||",
    "368:131": "ityādiṣṭaṃ munīndreṇa ratnapāṇirniśamya saḥ|",
    "368:132": "saṃbuddhaṃ taṃ sabhāṃ tāṃ ca samālokyaivamabravīt||",
    "368:133": "bhagavan sa mahāsattvo lokeśvaro jagatprabhuḥ|",
    "368:134": "nāgacchati kadāgatcched draṣṭumicchāmi taṃ prabhum||",
    "368:135": "iti tenoditaṃ śrutvā bhagavān sa śikhī jinaḥ|",
    "368:136": "ratnapāṇiṃ tamālokya sabhāṃ cāpyevamādiśat||",
    "368:137": "āgacchet sa mahāsattvo lokeśvaraḥ suduḥkhitaḥ|",
    "368:138": "sattvān sarvān samuddhṛtya preṣayitvā sukhāvatīm||",
    "368:139": "prathamamiha māṃ draṣṭumāgacchet sa kṛpānidhiḥ|",
    "368:140": "tadā taṃ trijagannāthaṃ paśca bhaja samādarāt||",
    "368:141": "ityādiṣṭaṃ munīndreṇa śrutvā sa ratnabhṛnmudā|",
    "368:142": "saha sarvasabhālokaistasthau taddarśanotsukaḥ||",
    "368:143": "tadāsau trijagannātho lokeśvaraḥ prabhāsayan|",
    "368:144": "dūrāttaṃ sugataṃ paśyan vihāre samupāviśat||",
    "368:145": "taṃ lokeśaṃ samāyātaṃ samīkṣya sugatātmajam|",
    "368:146": "sarve lokāḥ sabhāsīnāḥ samutthāya praṇemire||",
    "368:147": "ratnapāṇistamāyātaṃ saṃpaśyan sahasotthitaḥ|",
    "368:148": "sāṃjaliḥ samupāgamya vavande tatpadāmbuje||",
    "368:149": "evaṃ sa vandyamānastaiḥ sarvalokaiḥ prabhāsayan|",
    "368:150": "śikhinaṃ taṃ samālokya purataḥ samupācarat||",
    "368:151": "52",
    "368:152": "taṃ samāyātamālokya bhagavān sa śikhī mudā|",
    "368:153": "svāgataṃ te mahāsattva kauśalamityapṛcchata||",
    "368:154": "ityādiṣṭaṃ munīndreṇa śrutvā sa sugatātmajaḥ|",
    "368:155": "kauśalaṃ me sadā śāstariti vadannupācarat||",
    "368:156": "tatrāsau trijagannāthaḥ śikhinaṃ taṃ munīśvaram|",
    "368:157": "vanditvā taṃ mahāpadmamupasthāpyaivabravīt||",
    "368:158": "bhagavannamitābhena śāstremaṃ prahitaṃ kajam|",
    "368:159": "kuśalaṃ cāpi sarvatra pṛcchata te samantataḥ||",
    "368:160": "iti taduktamākarṇya bhagavān sa śikhī mudā|",
    "368:161": "gṛhītvā taṃ mahāpadmaṃ vāme sthāpyaivamabravīt||",
    "368:162": "sarvatra kauśalamatra kvacittasyāpi kauśalam|",
    "368:163": "iti pṛṣṭvā munīndraiśca tanevaṃ paryapṛcchata||",
    "368:164": "kulaputra tvayā sattvāḥ kiyanto narakāśritāḥ|",
    "368:165": "samuddhṛtya śubhe sthāpya preṣitāste sukhāvatīm||",
    "368:166": "iti pṛṣṭe munīndreṇa lokeśvaro vilokya saḥ|",
    "368:167": "saṃbuddhaṃ taṃ sabhāṃ cāpi samālokyaivamabravīt||",
    "368:168": "bhagavan bahavo'saṃkhyeyāḥ sattvā narakāśritāḥ|",
    "368:169": "te sarve'pi prayatnena mayālokya samuddhṛtāḥ||",
    "368:170": "tadyathā ye mahāduṣṭā avīcau karmabhoginaḥ|",
    "368:171": "raurave kālasūtre ca hāhavatapane'pi ca||",
    "368:172": "tāpane'gnidhaṭe ye ca śālmalike ca pāpinaḥ|",
    "368:173": "saṃghāate cāndhakāre ca śītodake'sipatrake||",
    "368:174": "evamanyaṣu sarveṣu narakeṣu samantataḥ|",
    "368:175": "svakṛtakarmabhuṃjānāṃ tiṣṭhanto duḥkhabhoginaḥ||",
    "368:176": "tīvraduḥkhāgnisantaptā mūḍhā viluptacetanāḥ|",
    "368:177": "te sarve'pi mayoddhṛtya saṃpreṣitāḥ sukhāvatīm||",
    "368:178": "bhūtāḥ pretāḥ piśācāśca kṣuptipāsāgnidāhitāaḥ|",
    "368:179": "sūcimukhādayo duṣṭā viṇmūtrāmedhyabhoginaḥ||",
    "368:180": "53",
    "368:181": "paśavo'pi ca ye duṣṭāḥ pakṣiṇo'pi durāratāḥ|",
    "368:182": "kṛmikīṭādayaścāpi svakarmafalabhoginaḥ||",
    "368:183": "te'pi sarve mayālokya mocayitvā svakarmataḥ|",
    "368:184": "samuddhṛtya prayatnene saṃpreṣitāḥ sukhāvatīm||",
    "368:185": "evamanye'pi sattvā ye martyā daityāḥsurā api|",
    "368:186": "adharmābhiratā duṣṭā bhraṣṭā narakagāminaḥ||",
    "368:187": "te'pi sarve mayāalokya bodhiyitvā prayatnataḥ|",
    "368:188": "sadharme saṃpratiṣṭhāpya saṃpreṣitā jinālaye||",
    "368:189": "evaṃ nityaṃ mayālokya prāṇino durito'rddhatāḥ|",
    "368:190": "sarve'pi narakāsīnāstīvraduḥkhāgnitāpitāḥ||",
    "368:191": "dine dine'pyasaṃkhyeyā samuddhṛtya prayatnataḥ|",
    "368:192": "bodhiyitvā śubhe sthāpya cārayitvā susaṃvare|",
    "368:193": "bodhimārge niyujyaivaṃ saṃpreṣitā jinālaye||",
    "368:194": "yathā mayā pratijñātaṃ tathā karttavyameva tat|",
    "368:195": "iti nityaṃ samālokya sattvā dharme'bhiyojitāḥ||",
    "368:196": "yāvantaḥ prāṇinaḥ sarve yāvanna bodhibhāginaḥ|",
    "368:197": "tāvadahaṃ na saṃbodhiṃ saṃprāpnuyāṃ jagaddhite||",
    "368:198": "iti dṛḍhā pratijñā me yāvanna paripūritā|",
    "368:199": "tāvat sattvān samālokya samuddhṛtya prayatnataḥ||",
    "368:200": "bodhayitvāpi kṛtvā ca caturbrahmavihāriṇaḥ|",
    "368:201": "bodhimārge pratiṣṭhāpya preṣayeyaṃ sukhāvatīm||",
    "368:202": "ityevaṃ bhagavaṃcchāste bodhicaryāṃ samācaran|",
    "368:203": "sarvasattvahitaṃ kṛtvā care tridhātukeṣvapi||",
    "368:204": "evaṃ nityaṃ jagallokia kṛtvā bhadrasukhotsavam|",
    "368:205": "pracaraṃ pracarāmyevaṃ cariṣyāmi sadā bhave||",
    "368:206": "ityuktvā sa mahāsattvo lokeśvaro jinātmajaḥ|",
    "368:207": "bhūyastaṃ śikhinaṃ natvā samanujñāmayācata||",
    "368:208": "bhagavan gantumicchāmi sattvānuddhartumanyataḥ|",
    "368:209": "tadanujñāṃ pradatvā me prasīdatu jagaddhite||",
    "368:210": "54",
    "368:211": "iti taduktamākarṇya sa śikhī bhagavān mudā|",
    "368:212": "lokeśvaraṃ mahābhijñaṃ tamālokyāivamabravīt||",
    "368:213": "sidhyatu te mahāsattva kāryaṃ saṃbodhisādhanam|",
    "368:214": "gaccha loke hitaṃ kurvan saṃcarasva sukhaṃ sadā||",
    "368:215": "ityādiṣṭaṃ munīndreṇa lokeśvaro jagatprabhuḥ|",
    "368:216": "śikhinaṃ dharmarājaṃ taṃ praṇatvā prācarattataḥ||",
    "368:217": "prakramittvā tataḥ so'gnipiṇḍa iva samujjvalan|",
    "368:218": "ākāśe'ntarhito'nyatra bhuvene bhāsayan yayau||",
    "368:219": "tamevaṃ khe gataṃ dṛṣṭvā ratnapāṇiḥ sa vismitaḥ|",
    "368:220": "śikhinaṃ bhagavantaṃ taṃ samālokyaivamabravīt||",
    "368:221": "bhagavaṃstrijagadbharturlokeaśsya mahānmanaḥ|",
    "368:222": "kiyatsukṛtasaṃbhāraṃ vidyate tatsamādiśa||",
    "368:223": "iti saṃprārthitaṃ tena śrutvā sa bhagavāṃchikhī|",
    "368:224": "ratnapāṇistamālokya samāmaṃtryaivamādiśat||",
    "368:225": "kulaputra śṛṇu cāsya lokeśasya jagatprabhoḥ|",
    "368:226": "puṇyaskandhaṃ pravakṣyāmi sattvānāṃ bhadrakāraṇe||",
    "368:227": "tadyathaike mahāsattvāḥ sarveṣāmapi dehinām|",
    "368:228": "sarvadā sarvasatkārairbhajanti samupasthitāḥ||",
