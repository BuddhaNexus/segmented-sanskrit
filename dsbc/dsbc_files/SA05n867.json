{
  "SA05n867:0": "bhaktiśatakam",
  "SA05n867:1": "mahāpaṇḍita-rāmacandrabhāratīviracitam",
  "SA05n867:2": "namastasmai bhagavate'rhate samyaksaṃbuddhāya",
  "SA05n867:3": "jñānaṃ yasya samastavastuviṣayaṃ yasyānavadyaṃ vaco",
  "SA05n867:4": "yasmin rāgalavo'pi naiva na punardveṣo na mohastathā |",
  "SA05n867:5": "yasyāheturanantasattvasukhadā'nalpā kṛpāmādhurī |",
  "SA05n867:6": "buddho vā giriśo'thavā sa bhagavān tasmai namaskurmahe || 1 ||",
  "SA05n867:7": "devaḥ śambhurna vairī harirapi na ripuḥ kevalī no sapatno",
  "SA05n867:8": "nodāsīnaḥ svayambhurna ca punarapare te pare vāsavādyāḥ |",
  "SA05n867:9": "śāstā buddho na bandhurjagati na janako naikagotraikajātiḥ",
  "SA05n867:10": "kintveṣāṃ vītarāgo bhavati sakalavid yaḥ sudhībhiḥ sa sevyaḥ || 2 ||",
  "SA05n867:11": "brahmā vidyābhibhūto duradhigamamahāmāyayāliṅgito'sau",
  "SA05n867:12": "viṣṇū rāgātirekānnijavapuṣi dhṛtā pārvatau śaṅkareṇa |",
  "SA05n867:13": "vītāvidyo vimāyo jagati sa bhagavān vītarāgo munīndraḥ",
  "SA05n867:14": "kaḥ sevyo buddhimadbhirvadata vadata me bhrātarasteṣu muktyai || 3 ||",
  "SA05n867:15": "brāhmaṃ vaiṣṇavamaiśvarañca bahudhā labdhvā padaṃ hetutaiḥ (taḥ)",
  "SA05n867:16": "saṃsāre vata saṃsaranti punarapyekāntaduḥkhāspade |",
  "SA05n867:17": "kintairdehabhṛtāmapāyabahalairādyantavadbhiḥ padai-",
  "SA05n867:18": "stasmānnityamanādimadhyanidhanaṃ bauddhaṃ padaṃ prārthyatām || 4 ||",
  "SA05n867:19": "cidākāraṃ sūkṣmaṃ vibhuviśadamākārarahitaṃ",
  "SA05n867:20": "nirīhaṃ nīrūpaṃ niravadhikṛpābījamajaram |",
  "SA05n867:21": "samastajñaṃ sarvopadhirahitamaiśyādamṛtadaṃ",
  "SA05n867:22": "jitānaṅgaiḥ sevyaṃ bhavatu mama tadvastu śaraṇam || 5 ||",
  "SA05n867:23": "aṇīyo'ṇoḥ kleśāpratihatamanantaṃ ca mahato",
  "SA05n867:24": "mahīyo māhātmyapravijitajagadbhūrikaruṇam |",
  "SA05n867:25": "dvibāhuṃ nirbāhuṃ dvipadamapadaṃ satrivadānam",
  "SA05n867:26": "dvinetraṃ nirnetraṃ saguṇamaguṇaṃ tattu śaraṇam || 6 ||",
  "SA05n867:27": "sadānandaṃ tathyaṃ sarasahṛdayaṃ sūktisadanaṃ",
  "SA05n867:28": "satāṃ sevyaṃ samyaksamadhigatatattvaṃ samamanaḥ |",
  "SA05n867:29": "svataḥ siddhaṃ sādhyaṃ sakalaphaladaṃ saumyavadanaṃ",
  "SA05n867:30": "sadīyaṃ sarvīyaṃ bhavatu mama tad vastu śaraṇam || 7 ||",
  "SA05n867:31": "svayambhūtābhijñaṃ bhavabhayaharaṃ bhītirahitaṃ",
  "SA05n867:32": "sphuradbhāgyo bhogojjhitamahatavīryaṃ madanajit |",
  "SA05n867:33": "caturmārgaṃ śuddhaprakṛti ca tathākartṛkamidaṃ",
  "SA05n867:34": "mudaṃ lokotkṛṣṭāmatanu tanutāṃ vastu jagatām || 8 ||",
  "SA05n867:35": "kvacinnīlaṃ pītaṃ kvacidapi ca raktaṃ kvacidapi",
  "SA05n867:36": "kvaciccandracchāyaṃ kvacidapi ca māñjiṣṭharuciram |",
  "SA05n867:37": "kvacit prābhāsvaryyaṃ yadayati ca varṇavyatikarā-",
  "SA05n867:38": "cchikhāṣaṭkaṃ taistairdadhadupari tadvastu śaraṇam || 9 ||",
  "SA05n867:39": "parābhedyaṃ jāmbūnadarūciravarṇaṃ triśaraṇaṃ",
  "SA05n867:40": "triyānaṃ triprajñaṃ tribhuvanaśaraṇyaṃ trivacanam |",
  "SA05n867:41": "kṛpāpātraṃ mandasmitamaruṇasaccīvaradharaṃ",
  "SA05n867:42": "kṛtadhyānaṃ siddhāsanaghaṭitapād vastu śaraṇam || 10 ||",
  "SA05n867:43": "prasannaṃ phullendīvaranayanayugmaṃ tripiṭakaṃ",
  "SA05n867:44": "muhurvyākurvāṇaṃ suranaragaṇebhyaḥ karuṇayā |",
  "SA05n867:45": "paraṃ śāntaṃ svarṇopalarajataloṣṭreṣu ca samaṃ",
  "SA05n867:46": "dṛśāṃ navyātithyaṃ bhavatu mama tad vastu śaraṇam || 11 ||",
  "SA05n867:47": "śaraṇamiti sadagraṃ sādhu gacchāmi buddhaṃ",
  "SA05n867:48": "śaraṇamiti virāgāgrīyamanvemi dharmam |",
  "SA05n867:49": "śaraṇamiti gaṇānāmagriyaṃ yāmi saṃghaṃ",
  "SA05n867:50": "śaraṇamiti punastriṃ dvitrivāraṃ vrajāmi || 12 ||",
  "SA05n867:51": "punarapi śaraṇaṃ vrajāmi buddhaṃ",
  "SA05n867:52": "punarapi lokaguruṃ guruṃ karomi |",
  "SA05n867:53": "punarapi kathayāmi naumi vande,",
  "SA05n867:54": "tvayi mama gautama naiva tṛptirāste || 13 ||",
  "SA05n867:55": "tribhuvanamasakṛnnirūpya yuṣmat-",
  "SA05n867:56": "padasarasīruhareṇumāśrito'ham |",
  "SA05n867:57": "śaraṇamayamayañca daivatamme",
  "SA05n867:58": "gatiraparā mama nāsti nāsti nāsti || 14 ||",
  "SA05n867:59": "anityamakhilaṃ duḥkhamanātmeti pravādine |",
  "SA05n867:60": "namo buddhāya dharmāya saṅghāya ca namo namaḥ || 15 ||",
  "SA05n867:61": "bho vītarāga bhagavaṃstava pādameva",
  "SA05n867:62": "vande munīndra muhurevamimaṃ pravande |",
  "SA05n867:63": "bhūyaḥ punaḥ punarimaṃ parataḥ parastāt",
  "SA05n867:64": "pārśvadvayorupari dikṣu vidikṣu vande || 16 ||",
  "SA05n867:65": "gatamiha bhavatā pathā ca yena",
  "SA05n867:66": "sthitamapi yatra ca yatra vā niṣaṇṇam |",
  "SA05n867:67": "śayitamapi munīndra yatra yogāt",
  "SA05n867:68": "tadapi śataṃ praṇamāmi puṇyatīrtham || 17 ||",
  "SA05n867:69": "samajani bhagavān svayaṃ sma yasmin",
  "SA05n867:70": "sakalamabodhi ca yatra dharmacakram |",
  "SA05n867:71": "viśadataramadīpi yatra yasmi-",
  "SA05n867:72": "nnamṛtamapūri tadapyahaṃ namāmi || 18 ||",
  "SA05n867:73": "sarvajñacakrasarasīruharājahaṃsa",
  "SA05n867:74": "kundendusundararuciṃ suravṛndavandyam |",
  "SA05n867:75": "saddharmacakrasahajaṃ janapārijātaṃ",
  "SA05n867:76": "śrīdantadhātumamalaṃ praṇamāmi bhaktyā || 19 ||",
  "SA05n867:77": "nāgālayopari dharālayacakravāla-",
  "SA05n867:78": "mūrdhni trikūṭagatakāñcanaśailaśṛṅge |",
  "SA05n867:79": "bodhidrumūlanihitākṣayadhātubimbaṃ",
  "SA05n867:80": "vibhrannamāmi śirasā jinacaityamagram || 20 ||",
  "SA05n867:81": "haimālavālavalayāntaratnavedhī",
  "SA05n867:82": "vajrāsanollasitamūlamagendrabodham |",
  "SA05n867:83": "yaṃ prāpya māravijayānupadaṃ prapede",
  "SA05n867:84": "sarvajñatāṃ sa bhagavān tamahaṃ namāmi || 21 ||",
  "SA05n867:85": "mūrddhan buddhaṃ nama tvaṃ śravaṇa śṛṇu sadā dharmamadvaidhavādi",
  "SA05n867:86": "proktaṃ sarvatra rūpaṃ nayana nirupamaṃ paśya jighrāṅaghripadmam |",
  "SA05n867:87": "ghrāṇa tvaṃ cārkabandhoḥ stuhi sakhi rasane śrīghanaṃ pūjayethāḥ",
  "SA05n867:88": "siddhaṃ pāṇe vrajāṅghre jinasadanamadasmadguṇaṃ citta cintya || 22 ||",
  "SA05n867:89": "buddho dharmaśca saṃghastritayamiti mahānargharatnaṃ mumukṣo-",
  "SA05n867:90": "radyārabhyāhamasmai tribhavabhayabhide sandadāmyātmabhājam |",
  "SA05n867:91": "eṣo'haṃ tatparaḥ syāmparamayanamito nāsti me satyametat",
  "SA05n867:92": "syāmasyāhantu śiṣyastridaśanutamidaṃ koṭikṛtvo namāmi || 23 ||",
  "SA05n867:93": "nāhaṃ lābhārcanārthī na ca bhayacakito nāpi satkīrtikāmo",
  "SA05n867:94": "na tvaṃ dharmāṃśuvaṃśaprabhava iti mune nāpi vidyāśayā te |",
  "SA05n867:95": "pāramparyānnaca tvāṃ śaraṇamupagataḥ kintu te sārvajanyaṃ",
  "SA05n867:96": "samyagjñānaṃ samīkṣya tvayi bhavajaladhiṃ santarītuṃ pravṛttaḥ || 24 ||",
  "SA05n867:97": "tvadvairāgyasamastabhūtakaruṇā prajñādinānāguṇa-",
  "SA05n867:98": "sphūrjjaccandanapaṅkasindhupatito gantuṃ kṣamo nānyataḥ |",
  "SA05n867:99": "bhūpā vā yadi daṇḍayanti vibudhā nindanti vā bāndhavā",
  "SA05n867:100": "muñcanti kṣaṇamapyahaṃ jina pitarjīvāmi na tvāṃ vinā || 25 ||",
  "SA05n867:101": "svarge vā vasatirmamāstu niraye tiryakṣu kiṃ vā''sure",
  "SA05n867:102": "pretānāṃ nagare'thavā narapure kvāpyanyataḥ karmaṇā |",
  "SA05n867:103": "bho sarvajña tatastatastava guṇān karṇāmṛtasyandino",
  "SA05n867:104": "niṣpāpānavalambatāṃ mama mano nānyā sukhaprārthanā || 26 ||",
  "SA05n867:105": "tavaivāhaṃ dāso guṇapaṇagṛhīto'smi bhavatā",
  "SA05n867:106": "tavaivāhaṃ śiṣyaḥ svavacanavinīto'smi bhavatā |",
  "SA05n867:107": "tavaivāhaṃ putraḥ smṛtikṛtasukhastadgatigato",
  "SA05n867:108": "guro buddhasvāmin mama janaka māṃ pāhi bhavataḥ || 27 ||",
  "SA05n867:109": "pitā mātā bhrātā tvamasi bhaginī tvaṃ ca vipadi",
  "SA05n867:110": "sthiraṃ mitraṃ bandhuḥ prabhuramṛtadīkṣāgurutamaḥ |",
  "SA05n867:111": "tvamaiśvaryyaṃ bhogo tvamasi dhanadhānyaṃ ca mahimā",
  "SA05n867:112": "yaśo vidyā prāṇastvamasi mama sarvajña sakalam || 28 ||",
  "SA05n867:113": "vītarāja munīndra dayāmbudhe",
  "SA05n867:114": "sugata bhagnabṛhadbhavapañjara |",
  "SA05n867:115": "adhigatāmṛta buddha mano'mbujaṃ",
  "SA05n867:116": "mama tavānagha gandhakuṭīyatām || 29 ||",
  "SA05n867:117": "anātmanyanitye'śubhe duḥkhaduḥkhe",
  "SA05n867:118": "durante'tra saṃsāracakre bhramantam |",
  "SA05n867:119": "tvamekosi māṃ trātumīśo dayābdhe",
  "SA05n867:120": "prabho'taḥ prasīda prasīda prasīda || 30 ||",
  "SA05n867:121": "prasīdeśa deveśa lokeśa jiṣṇo",
  "SA05n867:122": "jagadvandya madvandya sadvandya buddha |",
  "SA05n867:123": "aghore bhavāre smarāre tamore",
  "SA05n867:124": "tavaivāsmi bhakto vapurvāṅmanobhiḥ || 31 ||",
  "SA05n867:125": "sa tava kulasutaḥ sa eva bhaktaḥ",
  "SA05n867:126": "sa bhavati śāsanadhūrvahaḥ sa śiṣyaḥ |",
  "SA05n867:127": "sa ca śaraṇagataḥ sa eva dāsaḥ",
  "SA05n867:128": "kathamapi yo na vilaṅghayet tavājñām || 32 ||",
  "SA05n867:129": "jagadupakṛtireva buddha ! pūjā",
  "SA05n867:130": "tadapakṛtistava lokanātha ! pīḍā |",
  "SA05n867:131": "jina jagadapakṛt kathaṃ na lajje",
  "SA05n867:132": "gaditumahaṃ tava pādapadmabhaktaḥ || 33 ||",
  "SA05n867:133": "dhanajanavibhavāsudeharājyaṃ",
  "SA05n867:134": "yadupakṛte śatadhā tvayā pradattam |",
  "SA05n867:135": "tamahitamapakartturasya lokaṃ",
  "SA05n867:136": "kva mama kṛpā muditā kva vā ca maitrī || 34 ||",
  "SA05n867:137": "upapatimasatīva cittavṛtti-",
  "SA05n867:138": "rvrajati bhavantamapāsya pañcakāmam |",
  "SA05n867:139": "api ca viṣayiṇo na mokṣasiddhiḥ",
  "SA05n867:140": "kimu karavāṇi munīndra dehi dāsyam || 35 ||",
  "SA05n867:141": "priyatama puruṣottamāgrabuddha",
  "SA05n867:142": "śramahara siddha jagatprasiddhakīrte |",
  "SA05n867:143": "bhava śaraṇamanuttaraprasādin",
  "SA05n867:144": "pratipadamasmi tavaiva dāsadāsaḥ || 36 ||",
  "SA05n867:145": "daśabala kalikāladurbalo'haṃ",
  "SA05n867:146": "ciraduritārṇavatuṅgabhaṅgamagnaḥ |",
  "SA05n867:147": "tava kathamanuyāmi dharmanāvaṃ",
  "SA05n867:148": "jina mama dehi kṛpākarāvalambam || 37 ||",
  "SA05n867:149": "praṇatiriyamanekaśastavāhaṃ",
  "SA05n867:150": "bahu bhavaduḥkhamavekṣya bhītibhītaḥ |",
  "SA05n867:151": "dhara gurutaratṛṣṇayā patantaṃ",
  "SA05n867:152": "jina mama dehi kṛpākarāvalambam || 38 ||",
  "SA05n867:153": "jagati tava kṛpā hi nirviśeṣā",
  "SA05n867:154": "prapavatayā jina māṃ ca doṣaduṣṭam |",
  "SA05n867:155": "alamahamiaha no sukhī bhavendu-",
  "SA05n867:156": "rna samakaraścaratīva sādhvasādhve (dhvoḥ) || 39 ||",
  "SA05n867:157": "upacitabahumohajātamandhaṃ",
  "SA05n867:158": "vigatadayaṃ vigatātmabandhugandham |",
  "SA05n867:159": "apagataguṇavidyamudgatāghaṃ",
  "SA05n867:160": "janamavivekamavāśu dīnabandho || 40 ||",
  "SA05n867:161": "akaravamuruduṣkṛtaṃ purā yad",
  "SA05n867:162": "mama vapuṣā manasā ca cetasā ca |",
  "SA05n867:163": "anukalamakhilaṃ pralīyatāṃ tat",
  "SA05n867:164": "tava caraṇasmaraṇena sarvavedin || 41 ||",
  "SA05n867:165": "sugata tava puraḥ puraḥ pṛthivyāṃ",
  "SA05n867:166": "madhuramate patito'smi daṇḍanatyā |",
  "SA05n867:167": "akuśalamakhilaṃ tavānubhāvāt",
  "SA05n867:168": "prapatatu notpatatāt punaḥ sahaiva || 42 ||",
  "SA05n867:169": "tava caraṇasarojameva vande",
  "SA05n867:170": "tava padapaṅkajameva pūjayāmi |",
  "SA05n867:171": "tava padayugameva bhāvaye'haṃ",
  "SA05n867:172": "tava padameva sadaiva daivataṃ me || 43 ||",
  "SA05n867:173": "kamapi na kathayāmi nārcayāmi",
  "SA05n867:174": "kamapi na naumi na cintayāmi nehe |",
  "SA05n867:175": "kamapi na śaraṇaṃ vrajāmi hitvā",
  "SA05n867:176": "tava caraṇaṃ pitarasmi kiṅkaraste || 44 ||",
  "SA05n867:177": "sadasi sadasi vāci siddhaṃ",
  "SA05n867:178": "pathi pathi sadmani sadmanīha buddham |",
  "SA05n867:179": "bhuvi bhuvi mama vāri vāri cetaḥ",
  "SA05n867:180": "kalayatu nityamimaṃ hi lokanātham || 45 ||",
  "SA05n867:181": "aviratamavalokayāmi buddhaṃ",
  "SA05n867:182": "gatarajasā manasāpi cakṣuṣeva |",
  "SA05n867:183": "svapimi niśi nidhāya yaddhṛdi tvāṃ",
  "SA05n867:184": "na mama samaṃ virahastvayā ta eva || 46 ||",
  "SA05n867:185": "mama tadiha dinaṃ hi durdinaṃ syād",
  "SA05n867:186": "aśitaghanasthagitaṃ na durdinaṃ me |",
  "SA05n867:187": "yadamṛtasamabuddharatnanāma",
  "SA05n867:188": "smṛtirahitaṃ dinamasya mā tadastu || 47 ||",
  "SA05n867:189": "amṛtada ṣaḍabhijña dharmarāja",
  "SA05n867:190": "tribhuvanavandya munīndra gotameti |",
  "SA05n867:191": "aharaharanukīrttyate nṛbhiryai-",
  "SA05n867:192": "rahamahitānapi tānnamāmi dhanyān || 48 ||",
  "SA05n867:193": "daśabala jina siddha vajrabuddhe",
  "SA05n867:194": "sugata tathāgata buddha śākyasiṃha |",
  "SA05n867:195": "iti nigadati yaḥ kvacit kadācit",
  "SA05n867:196": "tamabhinamāmyapi dāsavaṃśajātam || 49 ||",
  "SA05n867:197": "madanajita parājitebhya śāsta-",
  "SA05n867:198": "rvibhava vināyaka viśvavidvareṇya |",
  "SA05n867:199": "kavivara vadatāṃvareśa śuddho-",
  "SA05n867:200": "danasuta śākyamune mune prasīda || 50 ||",
  "SA05n867:201": "amṛtamapi nipīya nirjarendra",
  "SA05n867:202": "punarapi te'pi śunīstanaṃ dhayanti |",
  "SA05n867:203": "sakṛdapi tava vāksudhārasajño",
  "SA05n867:204": "na viśati jātu sa mātureva garbham || 51 ||",
  "SA05n867:205": "ahamiha bhagavannalaṃ na soḍhuṃ",
  "SA05n867:206": "jananajarāmaraṇā(ma)",
  "SA05n867:207": "yādibādhām |",
  "SA05n867:208": "kuru mama karuṇaṃ diśo na jāne",
  "SA05n867:209": "guru tadavekṣya ca tiryagādiduḥkham || 52 ||",
  "SA05n867:210": "tadupari paricintya vṛddhakāle",
  "SA05n867:211": "karacaraṇādidṛgādipāravaśyam |",
  "SA05n867:212": "agatikamativepate mano me",
  "SA05n867:213": "jina kimahaṃ karavai prabho prasīda || 53 ||",
  "SA05n867:214": "śravaṇapathagate'pyadṛṣṭapūrve",
  "SA05n867:215": "sukhakṛti vastuni yattanomi tṛṣṇām |",
  "SA05n867:216": "aviratamata eva śāntibīje",
  "SA05n867:217": "tvayi valate ramate mamātra cetaḥ || 54 ||",
  "SA05n867:218": "savipadi ramate na me mano'taḥ",
  "SA05n867:219": "suranaraśarmaṇi pūrvapūrvabhukte |",
  "SA05n867:220": "anudinamanubhūya śarkarāyā-",
  "SA05n867:221": "mapi viratiṃ kurute hi dṛṣṭadoṣaḥ || 55 ||",
  "SA05n867:222": "karatalagatamapyamūlyacintāmaṇi-",
  "SA05n867:223": "mavadhīrayatīṅgitena mūrkhaḥ |",
  "SA05n867:224": "kathamahamapahāya buddharatnaṃ",
  "SA05n867:225": "jagati dhanī guṇavāṃśca paṇḍitaśca || 56 ||",
  "SA05n867:226": "sa bhavati matimān sa nākulīnaḥ",
  "SA05n867:227": "sa ca guṇavān sa ca kīrtimān sa śūraḥ |",
  "SA05n867:228": "sa jagati mahitaḥ sukhī sa eva",
  "SA05n867:229": "tvayi jina yasya suniścalāsti bhaktiḥ || 57 ||",
  "SA05n867:230": "api sakalamadhītamatra tena",
  "SA05n867:231": "śrutamapi sarvamanuṣṭhitaṃ ca tena |",
  "SA05n867:232": "api jitamajitena tena viśvaṃ",
  "SA05n867:233": "tvayi jina yasya suniścalāsti bhaktiḥ || 58 ||",
  "SA05n867:234": "tyajati nijaparamparādareṇe-",
  "SA05n867:235": "tarasamayasya jano na dṛṣṭa dṛṣṭim |",
  "SA05n867:236": "asuharamapi gauraveṇa mātu-",
  "SA05n867:237": "rna khalu śiśurviṣamodakaṃ tu muñcet || 59 ||",
  "SA05n867:238": "kavivaramahamasmi paṇḍitaste",
  "SA05n867:239": "jina na jahāmi kathannu kurgṛhītam |",
  "SA05n867:240": "nudati hi tamasantatiṃ pravṛttāṃ",
  "SA05n867:241": "mihiramarīcisahāyinī sudṛṣṭiḥ || 60 ||",
  "SA05n867:242": "sugatapadaparāṅmukhasya puṃsaḥ",
  "SA05n867:243": "kimu tapasā yaśasā ca kiṃ kimanyaiḥ |",
  "SA05n867:244": "sugatapadaparāṅnukhasya puṃsaḥ",
  "SA05n867:245": "kimu tapasā yaśasā ca kiṃ kimanyaiḥ || 61 ||",
  "SA05n867:246": "sugatapadi na bhaktirasti yeṣā-",
  "SA05n867:247": "majananireva mahītale'stu teṣām |",
  "SA05n867:248": "kathitamiha kṛtāgasāṃ narāṇāṃ",
  "SA05n867:249": "nirayagatirniyataṃ na cānyato yat || 62 ||",
  "SA05n867:250": "viditasakalaśāstramunnatānāṃ",
  "SA05n867:251": "kulabhavamuttamarupayauvanādyam |",
  "SA05n867:252": "jina bhavadanupāsakaṃ nṛpāsaṃ",
  "SA05n867:253": "tyajatu mano mala nīcavattu jātyā || 63 ||",
  "SA05n867:254": "parihṛtamadamānamatsarādiḥ",
  "SA05n867:255": "sakaruṇaśīlasamādhimān vivekī |",
  "SA05n867:256": "tava padadṛḍhabhaktirantyajo'pi",
  "SA05n867:257": "pratibhavamastu narottamaḥ sakhā me || 64 ||",
  "SA05n867:258": "vihitajinapadārcanasya bhaktu-",
  "SA05n867:259": "rdaśadivasānapi jīvitaṃ praśastam |",
  "SA05n867:260": "na tu niyutasahasrakalpakoṭī-",
  "SA05n867:261": "rakṛtamunīndrapadābjapūjanasya || 65 ||",
  "SA05n867:262": "sa bhavati surasundarīsakho'nyaiḥ",
  "SA05n867:263": "kṛtamabhinandati vārcanaṃ ca bhaktyā |",
  "SA05n867:264": "tridaśanaraguro tvadīyapūjā-",
  "SA05n867:265": "magatitayā yadi kartumakṣamaḥ syāt || 66 ||",
  "SA05n867:266": "suruciramaticitracitrarūpaṃ",
  "SA05n867:267": "nayanapathaṃ nayatīha yastavārcām |",
  "SA05n867:268": "rahayati puruṣaṃ tamapyudāraṃ",
  "SA05n867:269": "ciratarasañcitaduṣkṛtaṃ kavīndra || 67 ||",
  "SA05n867:270": "maṇikanakaśilādinirmitāṃ yaḥ",
  "SA05n867:271": "praṇamati te pratimāṃ tayośca tulyam |",
  "SA05n867:272": "phalamiha manasaśca samprasādā-",
  "SA05n867:273": "danuparataṃ jina yo'grato namet tvām || 68 ||",
  "SA05n867:274": "sakṛdapi tava pādapadmapūjā",
  "SA05n867:275": "vanakusumairapi yaḥ karoti dhīmān |",
  "SA05n867:276": "avanatasurasaṃghamaulimālo-",
  "SA05n867:277": "jjvalamamalaṃ śrayate tamādhipatyam || 69 ||",
  "SA05n867:278": "yadi bhavati sarūpamekacitta-",
  "SA05n867:279": "kṣaṇaśaraṇodbhavapuṇyavṛndamuccaiḥ |",
  "SA05n867:280": "gaṇaśaraṇa samantabhadrasādho'khila-",
  "SA05n867:281": "nabhaso'pyatiricyate tadā tat || 70 ||",
  "SA05n867:282": "tava guṇakathane tu yaḥ prasanna-",
  "SA05n867:283": "stamanuviśanti mune guṇāstvadīyāḥ |",
  "SA05n867:284": "udayati śaśini prasannamindū-",
  "SA05n867:285": "palamiva tatkiraṇāvalītuṣāraḥ || 71 ||",
  "SA05n867:286": "sakṛdapi samadāyi deva kiñcid",
  "SA05n867:287": "bhavaratimutsṛjatā janena tubhyam |",
  "SA05n867:288": "sugata tadakhilān lunāti dhārā-",
  "SA05n867:289": "vadasiriva drumamāśravādidoṣān || 72 ||",
  "SA05n867:290": "kṛtamiha sukṛtaṃ mṛṣādṛśā yajja-",
  "SA05n867:291": "nayati tat kila tasya durvipākam |",
  "SA05n867:292": "kṣitisalilarasaṃ svatiktabhāvaṃ",
  "SA05n867:293": "nayati yathā picumardabījamuptam || 73 ||",
  "SA05n867:294": "tava padanaline nipatya bhūyo",
  "SA05n867:295": "nipatati naiva caturṣvapāyakeṣu |",
  "SA05n867:296": "nahi kuśalakaro naraḥ kadāpi",
  "SA05n867:297": "kvacidapi durgatimeti nātha kaścit || 74 ||",
  "SA05n867:298": "iti bhavadupadeśato viditvā",
  "SA05n867:299": "tava padapaṅkajapūjane rato'smi |",
  "SA05n867:300": "dṛḍhayatu bhagavān yuge yuge me",
  "SA05n867:301": "kumatimudasya bhave bhave'ryabhaktim || 75 ||",
  "SA05n867:302": "sthiramapi bhagavan kṣaṇaṃ tavoktau",
  "SA05n867:303": "karacaraṇāni dṛgādi vairivargaḥ |",
  "SA05n867:304": "vyathayati hṛdayaṃ balādvicālya",
  "SA05n867:305": "tvamidamanāthamanīśa pāhi pāhi || 76 ||",
  "SA05n867:306": "yadi nayanamayaṃ vaśe vidhātuṃ",
  "SA05n867:307": "yatati tadā dravati śravo yadā tat |",
  "SA05n867:308": "tadanu rasana-nāsikāśarīrā-",
  "SA05n867:309": "ṇyahaha parasparadurgrahāṇi caivam || 77 ||",
  "SA05n867:310": "gatiraticapalasya cetasaḥ syā-",
  "SA05n867:311": "diha nabhasīva nabhasvato'surodhā |",
  "SA05n867:312": "kabhamapi bhajate krameṇa dhairyaṃ",
  "SA05n867:313": "ciaramidamabhyasanena saṃviraktyā || 78 ||",
  "SA05n867:314": "viśadamapi manaḥ svabhāvato me",
  "SA05n867:315": "cirakṛtakilviṣakālimāhṛtaṃ syāt |",
  "SA05n867:316": "kuśalajalalavaiḥ kathannu dhautaṃ",
  "SA05n867:317": "bhavati mayedṛśacetasārjitaistaiḥ || 79 ||",
  "SA05n867:318": "śucitaravacanāmṛtapravāhaiḥ",
  "SA05n867:319": "raghamalinīkṛtacittasantatiṃ mām |",
  "SA05n867:320": "anadhivara nitāntamādhitaptaṃ",
  "SA05n867:321": "sapadi viśodhaya daṇḍavannamāmi || 80 ||",
  "SA05n867:322": "sati sakalaguro mune prasanne",
  "SA05n867:323": "kimiha durāpamamutra kiṃ durāpam |",
  "SA05n867:324": "yadamalamanasastvadīyadāsāḥ",
  "SA05n867:325": "surapatitāṃ manasāpi nādriyante || 81 ||",
  "SA05n867:326": "vidadhati bhayamindriyāṇi bhūmnā",
  "SA05n867:327": "viṣayaviṣagrahaṇeṣu doṣadṛṣṭyā |",
  "SA05n867:328": "nahi suviditabhāvidāhadoṣaḥ",
  "SA05n867:329": "śiśurapi dīpaśikhāgrasaṅgṛhī syāt || 82 ||",
  "SA05n867:330": "na bhavati jina yāvadeṣa jīrṇo",
  "SA05n867:331": "viṣayapiśācaniṣevaṇena tāvat |",
  "SA05n867:332": "jhaṭiti sukṛtakarmaṇi prayojya",
  "SA05n867:333": "svava śaraṇāgatavatsalāgataṃ mām || 83 ||",
  "SA05n867:334": "iadamapi yadi vedmi putradāra-",
  "SA05n867:335": "svatanugṛhādi marīcikāmbutulyam |",
  "SA05n867:336": "sthagayati mamatā ca māmahantā",
  "SA05n867:337": "tadapi hi mohavijṛmbhitaṃ garīyaḥ || 84 ||",
  "SA05n867:338": "ajani ca nijakāraṇena sarvaṃ",
  "SA05n867:339": "nirasati jīryati naśyati svahetoḥ |",
  "SA05n867:340": "ahamapi hi tathaiva dhātupuñjaḥ",
  "SA05n867:341": "kathamahamasya kathaṃ mune mamedam || 85 ||",
  "SA05n867:342": "ātmabuddhiriha yasya jāyate",
  "SA05n867:343": "sā ca tasya janayedahaṅkṛtim |",
  "SA05n867:344": "sā tanoti sutarāṃ bhavaspṛhāṃ",
  "SA05n867:345": "saiva mohajananī muhurmuhuḥ || 86 ||",
  "SA05n867:346": "tena karma kurute śubhāśubhaṃ",
  "SA05n867:347": "taddhi duḥkhajanakaṃ bhavatraye |",
  "SA05n867:348": "duḥkhamūlamata eva sātmadhīḥ",
  "SA05n867:349": "tāṃ lunīhi jina me vaco'sinā || 87 ||",
  "SA05n867:350": "atha sakalavidaṃ dayāsamudraṃ",
  "SA05n867:351": "tribhuvanakāraṇakāraṇaṃ kulīnam |",
  "SA05n867:352": "nikhilagatamanantamastiśāntiṃ",
  "SA05n867:353": "munijanamānasahaṃsamīśamīḍe || 88 ||",
  "SA05n867:354": "snāne karmaṇi bhojane vitaraṇe ghrāṇe tathā''karṇane",
  "SA05n867:355": "dhyānasparśanadarśanādiṣu tathā sambhāṣaṇādāvapi |",
  "SA05n867:356": "prātaḥ sāyamatho divā ca niśi ca tvatpādapadme vibho",
  "SA05n867:357": "cittaṃ me ramatāṃ munīndra satataṃ yūnāṃ yuvatyāmiva || 89 ||",
  "SA05n867:358": "matsvāmin madabhīṣṭakalpaviṭapin maddevate madguro",
  "SA05n867:359": "manmātarmadupāsya matpriyasakhe matsadgate matpitaḥ |",
  "SA05n867:360": "madvidye madaśeṣaduḥkhaśamakṛd madbhāvane mannidhe",
  "SA05n867:361": "manmukte madudārabhāgya madaso madbuddha māṃ pālaya || 90 ||",
  "SA05n867:362": "brahmā jihmānano'bhūd gururagururaharṇāyako'nāyako'sau",
  "SA05n867:363": "viṣṇustṛṣṇāṃ prapede kavirakavirabhūdīśvaro'nīśvaro'pi |",
  "SA05n867:364": "śeṣaḥ śeṣānubhāvastava sugata nutau khaṇḍitākhaṇḍaloktiḥ",
  "SA05n867:365": "ko'haṃ mūḍho varākastridaśanarapate kīrttane te guṇānām || 91 ||",
  "SA05n867:366": "daśadvayadhikaviṃśatisphuradaśītyanuvyañjanaiḥ",
  "SA05n867:367": "mahāpuruṣalakṣaṇaṃ vapuṣi yasya dedīpyate |",
  "SA05n867:368": "kalāmapi na ṣoḍaśīṃ bhajati tasya puṇyātmana-",
  "SA05n867:369": "ścaturmukhamukho gaṇo diviṣadāṃ nṛṇāṃ kā kathā || 92 ||",
  "SA05n867:370": "mahendranavacāpavat kanakaparvate sarvataḥ",
  "SA05n867:371": "sadā tava manoharaṃ sphurati suprabhāmaṇḍalam |",
  "SA05n867:372": "dṛśo bhavati gocaraṃ tadiha yasya tasya tvarān",
  "SA05n867:373": "tamastatimanuttamāṃ harati dūramantarbahiḥ || 93 ||",
  "SA05n867:374": "rūpaṃ locanalobhanaṃ śravaṇayorānandasandohadā",
  "SA05n867:375": "vāṇī viśvavimohakṛt tava kṛpāveśo'tiśāntastava |",
  "SA05n867:376": "pāṇḍityaṃ prathitaṃ jagatsu bhagavan sarvajñanāmnaiva te",
  "SA05n867:377": "sāmrājyasya ca yauvane nirasanaṃ vairāgyasīmā sphuṭam || 94 ||",
  "SA05n867:378": "śauryaṃ tvadviṣameṣu darpadalanādaṅgīkṛtaṃ daivataiḥ",
  "SA05n867:379": "yadvāṇaiḥ sa surāsuraḥ pravijito loko'yamośatkaram |",
  "SA05n867:380": "vīryaṃ te prakaṭīcakāra nitarāṃ nirvāṇasākṣātkṛtiḥ",
  "SA05n867:381": "kiṃ brūmo balavaibhavaṃ bhagavatastatte jagaddurvaham || 95 ||",
  "SA05n867:382": "yatra cchāgaturaṅgamāraṇavidhirvede'pi taṃ nindasi",
  "SA05n867:383": "premṇā prāṇabhṛtāmataḥ sakaruṇastvatto mahānnāparaḥ |",
  "SA05n867:384": "evaṃ te guṇasampado na viṣayā buddherasūyātmanāṃ",
  "SA05n867:385": "te mūḍhāḥ pralapanti hanta sugato madvedanindītyayam || 96 ||",
  "SA05n867:386": "nirmajjatsurasundarīkucacalannirmandamandākinī-",
  "SA05n867:387": "pheṇakṣīrasamudrakairavasakhī satkīrtilakṣmīstava |",
  "SA05n867:388": "yannāliṅgati mandabhāgyamadhunā bhūyānna tenāpi me",
  "SA05n867:389": "saṅgaḥ saṅgagadādivaidya bhagavanneṣāpi me prārthanā || 97 ||",
  "SA05n867:390": "ye tvāṃ gacchanti buddhaṃ śaraṇamiti na te durgatiṃ yānti santa-",
  "SA05n867:391": "styaktvā kāyānmanuṣyānniratiśayasukhān te labhante'tha divyān |",
  "SA05n867:392": "duḥsvapno durnimittaṃ durahidurahitā durgrahā duṣṭasattvā",
  "SA05n867:393": "duḥkhaṃ durvyādhayo'pi kvacidiha kuśalān nopasarpanti caivam || 98 ||",
  "SA05n867:394": "chatraṃ brahmā vyadhātte maṇimayamamalaṃ cāmaraṃ cakrapāṇi-",
  "SA05n867:395": "stotāro gadyapadyairharaguru-phaṇinaḥ śāṅkhiko'bhūnmahendraḥ |",
  "SA05n867:396": "anye dīpodakumbhadhvajakusumalasatpāṇayo bhaktinamrā-",
  "SA05n867:397": "stasthurvyākhyāya dharmaṃ bhuvamavaruhataḥ svargataste munīndra || 99 ||",
  "SA05n867:398": "mātevāsīt parastrī bhavati paradhane na spṛhā yasya puṃso",
  "SA05n867:399": "mithyāvādī na yaḥ syānna pibati madirāṃ prāṇino yo na hanyāt |",
  "SA05n867:400": "maryādābhaṅgabhīruḥ sakaruṇahṛdayastyaktasarvābhimāno",
  "SA05n867:401": "dharmātmā te sa eva prabhavati bhagavan pādapūjāṃ vidhātum || 100 ||",
  "SA05n867:402": "sarvaprāṇātipātāt paradhanaharaṇāt saṅgamādaṅganāyā",
  "SA05n867:403": "mithyāvādācca madyādbhavati jagati yo'kālabhutkternivṛttaḥ |",
  "SA05n867:404": "saṅgītasraksugandhābharaṇavilasitāduccaśayyāsanāda-",
  "SA05n867:405": "pyāsīddhīmān sa eva tridaśanaraguro tvatsuto nātra śaṅkā || 101 ||",
  "SA05n867:406": "śrotāpattyādimārgāḥ sadavayavayutā ghnanti rāgādidoṣān",
  "SA05n867:407": "doṣāste chinnamūlā hatabhavagatayastatphalairyānti śāntim |",
  "SA05n867:408": "mārgāṇāṃ kleśahāniḥ sadamṛtamajaraṃ kāraṇaṃ syānnavānāṃ",
  "SA05n867:409": "dharmāṇāṃ hetureṣāṃ tava jina vacanaṃ tasya hetustvameva || 102 ||",
  "SA05n867:410": "viṃśatsatkāyadṛṣṭikṣitidharamamalajñānavajreṇa bhittvā",
  "SA05n867:411": "rāgadveṣādipāpāntaduditamakhilaṃ karma conmūlayantaḥ |",
  "SA05n867:412": "catvāro labdhamārgāstadanuguṇaphalāste'pi catvāra evaṃ",
  "SA05n867:413": "tvataścāṣṭāryasaṅghaḥ pṛthagiti na punaścintayāmo munīndra || 103 ||",
  "SA05n867:414": "api gagaṇamanantaṃ sarvasattvo'pyanantaḥ",
  "SA05n867:415": "sakalamidamanantaṃ cakravālaṃ viśālam |",
  "SA05n867:416": "vadasi jina viditvānantayā jñānagatyā",
  "SA05n867:417": "tava ca guṇamanantaṃ vedasī buddha caivam || 104 ||",
  "SA05n867:418": "bhagavati bhavatīti dhvaṃsakāriṇyamoghe",
  "SA05n867:419": "bhavatu bhavatu bhaktirjanmajanmāntare'pi |",
  "SA05n867:420": "bhavatu bhavatu dharmaḥ sarvathā me'nuśāstā",
  "SA05n867:421": "bhavatu bhavatu saṃgho'nuttarā puṇyabhūmiḥ || 105 ||",
  "SA05n867:422": "tribhuvanamahanīyaṃ tvāmabhiṣṭutya buddhaṃ",
  "SA05n867:423": "viśadataramadabhraṃ puṇyamatrārjitaṃ yat |",
  "SA05n867:424": "jagati sakalasattvāstena sambuddhabodhiṃ",
  "SA05n867:425": "vidhutavividhapāpā bhāvanābhirvrajantu || 106 ||",
  "SA05n867:426": "bhāsvadbhānukulāmbujanmamihire rājādhirājeśvare",
  "SA05n867:427": "śrīlaṅkādhipatau parākramabhuje nītyā mahīṃ śāsati |",
  "SA05n867:428": "sadgauḍaḥ kavibhāratikṣitisuraḥ śrīrāmacandraḥ sudhīḥ",
  "SA05n867:429": "śrītṛṇāmakarot sa bhaktiśatakaṃ dharmārthamokṣapradam || 107 ||",
  "SA05n867:430": "śrīśākyamunerbhagavataḥ sarvajñasya paramopāsakena gauḍadeśīya-",
  "SA05n867:431": "śrībauddhāgamacakravarttinā bhūsureṇācāryeṇa mahāpaṇḍitena",
  "SA05n867:432": "viracitaṃ bhaktiśatakaṃ samāptam |",
  "SA05n867:433": "nṛpaḥ parākrāntibhujo mahībhujo śiromaṇiḥ paṇḍitamaṇḍalīsakhaḥ |",
  "SA05n867:434": "sa rāmacandraṃ kavibhāratidvijaṃ cakāra bauddhāgamacakravartinam || 1 ||",
  "SA05n867:435": "buddho me jayatāṃ jinaḥ sa bhagavān taddeśanā nirmalā",
  "SA05n867:436": "stheyāt sattvahitāya bhātu bhaṇitā saṅghastadādhārakaḥ |",
  "SA05n867:437": "laṅkeśapramukhāściaraṃ vasumatīṃ rakṣantu nityaṃ nṛpā",
  "SA05n867:438": "varṣantu stanayitnavaśca samaye maitrīṃ labhantāṃ prajāḥ || 2 ||",
  "SA05n867:439": "tīrthagrāmapateryatestripiṭakācāryasya bhūpānvayā-",
  "SA05n867:440": "cāryaśreṣṭhamunīśvarasya sugiraḥ śrīrāhulasvāminaḥ |",
  "SA05n867:441": "śiṣyo yo'varajaḥ sumaṅgalamunirdhīmān svayā bhāṣayā",
  "SA05n867:442": "kāruṇyena munīndrabhaktiśatakavyākhyānamākhyātavān || 3 ||",
  "SA05n867:443": "namo buddhāya gurave namo dharmāya śāsine |",
  "SA05n867:444": "namaḥ saṅghāya mahate tribhyo'pi satataṃ namaḥ || 4 ||",
  "SA05n867:445": "siddhiḥ |"
}