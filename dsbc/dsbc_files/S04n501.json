{
  "S04n501:0": "pūrvayogaparivartaḥ",
  "S04n501:1": "smarāmi pūrvaṃ caramāṇu cārikāṃ",
  "S04n501:2": "siṃhadhvajasya sugatasya śāsane |",
  "S04n501:3": "abhūṣi bhikṣu vidu dharmabhāṇako",
  "S04n501:4": "nāmena so ucyati brahmadattaḥ || 1 ||",
  "S04n501:5": "ahaṃ tadāsīnmati rājaputro",
  "S04n501:6": "ābādhiko bāḍha gilāna duḥkhitaḥ |",
  "S04n501:7": "mahyaṃ ca si ācariyo abhūṣi",
  "S04n501:8": "yo brahmadattastada dharmabhāṇakaḥ || 2 ||",
  "S04n501:9": "pañcottarā vaidyaśatā anūnakā",
  "S04n501:10": "vyādhiṃ cikitsanti udyuktamānasāḥ |",
  "S04n501:11": "vyādhiṃ na śaknanti mama cikitsituṃ",
  "S04n501:12": "sarve mama jñātaya āsi duḥkhitāḥ || 3 ||",
  "S04n501:13": "śrutvā ca gailānyu sa mahya bhikṣu",
  "S04n501:14": "gilānapṛccho mama antikāgataḥ |",
  "S04n501:15": "kṛpāṃ janetvā mama brahmadatto",
  "S04n501:16": "imaṃ samādhiṃ varu tatra deśayī || 4 ||",
  "S04n501:17": "tasya mamā etu samādhi śrutvā",
  "S04n501:18": "utpanna prīti ariyā nirāmiṣā |",
  "S04n501:19": "svabhāvu dharmāṇa prajānamāno",
  "S04n501:20": "ucchvāsi vyādhī tuhu tasmi kāle || 5 ||",
  "S04n501:21": "dīpaṃkaraḥ so caramāṇu cārikā-",
  "S04n501:22": "mabhūṣi bhikṣurvidu dharmabhāṇakaḥ |",
  "S04n501:23": "ahaṃ ca āsīnmatirājaputraḥ",
  "S04n501:24": "samādhijñānena hu vyādhi mocitaḥ || 6 ||",
  "S04n501:25": "tasmāt kumārā bahu paścakāle",
  "S04n501:26": "anusmaranto imu pārihāṇim |",
  "S04n501:27": "sahesi bālāna durukta vākyaṃ",
  "S04n501:28": "dhārentu vācentu imaṃ samādhim || 7 ||",
  "S04n501:29": "bheṣyanti bhikṣu bahu paścakāle",
  "S04n501:30": "lubdhāśca duṣṭāśca asaṃyatāśca |",
  "S04n501:31": "pāpeccha adhyoṣita pātracīvare",
  "S04n501:32": "pratikṣipiṣyanti imaṃ samādhim || 8 ||",
  "S04n501:33": "īrṣyālukā uddhata prākaṭendriyāḥ",
  "S04n501:34": "kuleṣu cādhyoṣita lābhakāmāḥ |",
  "S04n501:35": "prāyogike saṃstavi nitya saṃśritāḥ",
  "S04n501:36": "pratikṣipiṣyanti imaṃ samādhim || 9 ||",
  "S04n501:37": "hastāṃśca pādāṃśca tatha vidyamānā",
  "S04n501:38": "hāsye ca lāsye ca sadā prayuktāḥ |",
  "S04n501:39": "parasparaṃ kaṇṭhita śliṣyamāṇā",
  "S04n501:40": "grāmeṣu caryāpathi anyu bheṣyati || 10 ||",
  "S04n501:41": "ayuktayogānimi bhonti lakṣaṇāḥ",
  "S04n501:42": "parakumārīṣu ca nitya dhyoṣitāḥ |",
  "S04n501:43": "rūpeṇa raktā grathitā bhavanti",
  "S04n501:44": "hiṇḍanti grāmānnigamāṃśca rāṣṭrān || 11 ||",
  "S04n501:45": "te khādyapeyasmi sadā prayuktā",
  "S04n501:46": "nāṭye ya gīte ca tathaiva vādite |",
  "S04n501:47": "krayavikraye co sada bhonti utsukāḥ",
  "S04n501:48": "pāne'pi cādhyoṣita naṣṭalajjāḥ || 12 ||",
  "S04n501:49": "lekhāna piṣyanti ayuktayogāḥ",
  "S04n501:50": "śīlaṃ tatheryāpathu chorayitvā |",
  "S04n501:51": "maryāda bhinditva gṛhībhi sārdhaṃ",
  "S04n501:52": "te bhinnavṛttā vitathapratiṣṭhitāḥ || 13 ||",
  "S04n501:53": "ye karma buddhehi sadā vivarjitā-",
  "S04n501:54": "stulamānakūṭe ca sadā prayuktāḥ |",
  "S04n501:55": "tatkarma kṛtvāna kiliṣṭapāpakān",
  "S04n501:56": "apāyu yāsyanti nihīnakarmāḥ || 14 ||",
  "S04n501:57": "prabhūtavittaṃ maṇihemaśaṃkhaṃ",
  "S04n501:58": "gṛhāṃśca jñātīṃśca vihāya pravraji |",
  "S04n501:59": "te pravrajitvāniha buddhaśāsane",
  "S04n501:60": "pāpāni karmāṇi sadācaranti || 15 ||",
  "S04n501:61": "dhane ca dhānye ca te sārasaṃjñino",
  "S04n501:62": "dhenūśca gāvaḥ śakaṭāni sajjayī |",
  "S04n501:63": "kimartha tehi ima keśa choritā",
  "S04n501:64": "śikṣāya yeṣāṃ pratipatti nāsti || 16 ||",
  "S04n501:65": "mayā ca pūrve cariyāṃ caritvā",
  "S04n501:66": "suduṣkaraṃ kalpasahasra cīrṇam |",
  "S04n501:67": "ayaṃ ca me śānta samādhireṣito",
  "S04n501:68": "yatteṣa śrutvā tada hāsyu bheṣyati || 17 ||",
  "S04n501:69": "ciraṃ mṛṣāvādi abrahmacāriṇo",
  "S04n501:70": "apāyanimnāḥ sada kāmalābhāḥ |",
  "S04n501:71": "te brahmacārīṇa dhvajaṃ gṛhītvā",
  "S04n501:72": "duḥśīla vakṣyanti na eṣa dharmaḥ || 18 ||",
  "S04n501:73": "bhedāya sthāsyanti ca te parasparaṃ",
  "S04n501:74": "ayuktibhirlābha gaveṣamāṇāḥ |",
  "S04n501:75": "avarṇa bhāṣitva ta anyamanyaṃ",
  "S04n501:76": "cyutā gamipyanti apāyabhūmim || 19 ||",
  "S04n501:77": "śataḥsahasreṣu sudurlabhāste",
  "S04n501:78": "kṣāntībalaṃ yeṣu tadā bhaviṣyati |",
  "S04n501:79": "ato bahū ye kalahasmi utsukāḥ",
  "S04n501:80": "prapañca kāhinti jahitva kṣāntim || 20 ||",
  "S04n501:81": "vakṣyanti vācā vaya bodhisattvāḥ",
  "S04n501:82": "śabdo'pi teṣāṃ vraji deśadeśe |",
  "S04n501:83": "abhūtaśabdena madena mattā",
  "S04n501:84": "vipannaśīlāna kuto'sti bodhiḥ || 21 ||",
  "S04n501:85": "na me śrutaṃ nāpi kadāci dṛṣṭa-",
  "S04n501:86": "madhyāśayo yasya viśuddha nāsti |",
  "S04n501:87": "imeṣu dharmeṣu ca nāsti kṣāntiḥ",
  "S04n501:88": "sa lapsyate bodhi kṣipitva dharmān || 22 ||",
  "S04n501:89": "bhītāśca trastāśca gṛhaṃ tyajanti",
  "S04n501:90": "te pravraji dṛḍhatarā bhavanti |",
  "S04n501:91": "viśeṣakāmā vilayaṃ prayānti",
  "S04n501:92": "kṣipitva yānaṃ puruṣottamānām || 23 ||",
  "S04n501:93": "nihīnaprajñā guṇaviprahīnā",
  "S04n501:94": "vakṣyanti doṣaṃ sada agrayāne |",
  "S04n501:95": "yasmai ca te taccharaṇaṃ prapannā-",
  "S04n501:96": "statraiva ye doṣaśatān vadanti || 24 ||",
  "S04n501:97": "ājīvakā ye bahu pravrajitvā",
  "S04n501:98": "anarthikāḥ sarvasubuddhabodhaye |",
  "S04n501:99": "te ātmadṛṣṭīya sthihitva bālā",
  "S04n501:100": "uttrasta bheṣyanti śruṇitva śūnyatām || 25 ||",
  "S04n501:101": "vihāru kṛtvāna ta anyamanyaṃ",
  "S04n501:102": "vyāpādadoṣāṃśca khilaṃ janetvā |",
  "S04n501:103": "abhyākhya datvā ca paraspareṇa",
  "S04n501:104": "lapsyanti prāmodya karitva pāpakam || 26 ||",
  "S04n501:105": "yaḥ śīlavanto guṇavantu bheṣyati",
  "S04n501:106": "maitrīvihārī sada kṣāntikovidaḥ |",
  "S04n501:107": "susaṃvṛto mārdavasūrataśca",
  "S04n501:108": "paribhūta so bheṣyati tasmi kāle || 27 ||",
  "S04n501:109": "yo kho punarbheṣyati duṣṭacittaḥ",
  "S04n501:110": "sudāruṇo raudrātihīnakarmā |",
  "S04n501:111": "adharmacārī kalahe rataśca",
  "S04n501:112": "sa pūjito bheṣyati tasmi kāle || 28 ||",
  "S04n501:113": "ārocayāmi prativedayāmi",
  "S04n501:114": "sacet kumārā mama śraddha gacchasi |",
  "S04n501:115": "imāṃ smaritvā sugatānuśāsanīṃ",
  "S04n501:116": "mā jātu viśvastu bhavesi teṣām || 29 ||",
  "S04n501:117": "te tīvrarāgāstatha tīvradoṣā-",
  "S04n501:118": "ste tīvramohāḥ sada mānamattāḥ |",
  "S04n501:119": "adāntakāyāśca adāntavācaḥ",
  "S04n501:120": "adāntacittāśca apāyanimnāḥ || 30 ||",
  "S04n501:121": "ahaṃ ca bhāṣeyya guṇāna varṇān",
  "S04n501:122": "na co guṇān bhikṣu samācareyyā |",
  "S04n501:123": "na ghoṣamātreṇa ca bodhi labhyate",
  "S04n501:124": "pratipattisārāṇa na bodhi durlabhā || 31 ||",
  "S04n501:125": "iti śrīsamādhirāje pūrvayogaparivarto nāma ṣoḍaśaḥ || 16 ||"
}