{
    "925:0": "CANTO XI",
    "925:1": "athaivamukto magadhādhipena",
    "925:2": "suhṛnmukhena pratikūlamartham|",
    "925:3": "svastho'vikāraḥ kulaśaucaśuddhaḥ",
    "925:4": "śauddhodanirvākyamidaṃ jagāda||1||",
    "925:5": "nāścaryametadbhavato vidhānaṃ",
    "925:6": "jātasya haryaṅkakule viśāle|",
    "925:7": "yanmitrapakṣe tava mitrakāma",
    "925:8": "syādvṛttireṣā pariśuddhavṛtteḥ||2||",
    "925:9": "asatsu maitrī svakulānuvṛttā",
    "925:10": "na tiṣṭhati śrīriva viklaveṣu|",
    "925:11": "pūrvaiḥ kṛtāṃ prītiparaṃparābhi-",
    "925:12": "stāmeva santastu vivardhayanti||3||",
    "925:13": "ye cārthakṛccheṣu bhavanti loke",
    "925:14": "samānakāryāḥ suhṛdāṃ manuṣyāḥ|",
    "925:15": "mitrāṇiḥ tānīti paraimi buddhyā",
    "925:16": "svasthasya vṛddhiṣviha ko hi na syāt||4||",
    "925:17": "evaṃ ca ye dravyamavāpya loke",
    "925:18": "mitreṣu dharme ca niyojayanti|",
    "925:19": "avāptasārāṇi dhanāni teṣāṃ",
    "925:20": "bhraṣṭāni nānte janayanti tāpam||5||",
    "925:21": "suhṛttayā cāryatayā ca rājan",
    "925:22": "khalveṣa yo māṃ prati niścayaste|",
    "925:23": "atrānuneṣyāmi suhṛttayaiva",
    "925:24": "brūyāmahaṃ nottaramanyadatra||6||",
    "925:25": "ahaṃ jarāmṛtyubhayaṃ viditvā",
    "925:26": "mumukṣayā dharmamimaṃ prapannaḥ|",
    "925:27": "bandhūn priyānaśrumukhānvihāya",
    "925:28": "prāgeva kāmānuśubhasya hetūn||7||",
    "925:29": "nāśīviṣebhyo hi tathā bibhemi",
    "925:30": "naivāśanibhyo gaganāccyutebhyaḥ|",
    "925:31": "na pāvakebhyo'nilasaṃhitebhyo",
    "925:32": "yathā bhayaṃ me viṣayebhya eva||8||",
    "925:33": "kāmā hyanityāḥ kuśalārthacaurā",
    "925:34": "riktāśca māyāsadṛśāśca loke|",
    "925:35": "āśāsyamānā api mohayanti",
    "925:36": "cittaṃ nṛṇāṃ kiṃ punarātmasaṃsthāḥ||9||",
    "925:37": "kāmābhibhūtā hi na yānti śarma",
    "925:38": "tripiṣṭape kiṃ bata martyaloke|",
    "925:39": "kāmaiḥ satṛṣṇasya hi nāsti tṛpti-",
    "925:40": "ryathendhanairvātasakhasya vanheḥ||10||",
    "925:41": "jagatyanartho na samo'sti kāmai-",
    "925:42": "rmohācca teṣveva janaḥ prasaktaḥ|",
    "925:43": "tattvaṃ viditvaivamanarthabhīruḥ",
    "925:44": "prājñaḥ svayaṃ ko'bhilaṣedanartham||11||",
    "925:45": "samudravaktrāmapi gāmavāpya",
    "925:46": "pāraṃ jigīṣanti mahārṇavasya|",
    "925:47": "lokasya kāmairna vitṛptirasti",
    "925:48": "patidbhirambhobhirivārṇavasya||12||",
    "925:49": "devena vṛṣṭe'pi hiraṇyavarṣe",
    "925:50": "dvīpānsamagrāṃścaturo'pi jitvā|",
    "925:51": "śakrasya cārdhāsanamapyavāpya",
    "925:52": "māndhāturāsīdviṣayeṣvatṛptiḥ||13||",
    "925:53": "bhuktvāpi rājyaṃ divi devatānāṃ",
    "925:54": "śatakratau vṛtrabhayātpranaṣṭe|",
    "925:55": "darpānmaharṣīnapi vāhayitvā",
    "925:56": "kāmeṣvatṛpto nahuṣaḥ papāta||14||",
    "925:57": "aiḍaśca rājā tridivaṃ vigāhya",
    "925:58": "nītvāpi devī vaśamurvaśī tām|",
    "925:59": "lobhādṛṣibhyaḥ kanakaṃ jihīrṣu-",
    "925:60": "rjagāma nāśaṃ viṣayeṣvatṛptaḥ||15||",
    "925:61": "balermahendraṃ nahuṣaṃ mahendrā-",
    "925:62": "dindraṃ punarye nahuṣādupeyuḥ|",
    "925:63": "svarge kṣitau vā viṣayeṣu teṣu",
    "925:64": "ko viśvasedbhāgyakulākuleṣu||16||",
    "925:65": "cīrāmbarā mūlaphalāmbubhakṣā",
    "925:66": "jaṭā vahanto'pi bhujaṅgadīrghāḥ|",
    "925:67": "yairnānyakāryā munayo'pi bhagnāḥ",
    "925:68": "kaḥ kāmasaṃjñānmṛgayeta śatrūn||17||",
    "925:69": "ugrāyudhaścogradhṛtāyudho'pi",
    "925:70": "yeṣāṃ kṛte mṛtyumavāpa bhīṣmāt|",
    "925:71": "cintāpi teṣāmaśivā vadhāya",
    "925:72": "sadvṛttināṃ kiṃ punaravratānām||18||",
    "925:73": "āsvādamalpaṃ viṣayeṣu matvā",
    "925:74": "saṃyojanotkarṣamatṛptimeva|",
    "925:75": "sadbhyaśca garhā niyataṃ ca pāpaṃ",
    "925:76": "kaḥ kāmasaṃjñaṃ viṣamādadīta||19||",
    "925:77": "kṛṣyādibhiḥ karmabhirarditānāṃ",
    "925:78": "kāmātmakānāṃ ca niśamya duḥkham|",
    "925:79": "svāsthyaṃ ca kāmeṣvakutūhalānāṃ",
    "925:80": "kāmānvihātuṃ kṣamamātmavadbhiḥ||20||",
    "925:81": "jñeyā vipatkāmini kāmasaṃpa-",
    "925:82": "tsiddheṣu kāmeṣu madaṃ hyupaiti|",
    "925:83": "madādakārya kurute na kārya",
    "925:84": "yena kṣato durgatimabhyupaiti||21||",
    "925:85": "yatnena labdhvāḥ parirakṣitāśca",
    "925:86": "ye vipralabhya pratiyānti bhūyaḥ|",
    "925:87": "teṣvātmavānyācitakopameṣu",
    "925:88": "kāmeṣu vidvāniha ko rameta||22||",
    "925:89": "anviṣya cādāya ca jātatarṣā",
    "925:90": "yānatyajantaḥ pariyānti duḥkham|",
    "925:91": "loke tṛṇolkāsadṛśeṣu teṣu",
    "925:92": "kāmeṣu kasyātmavato ratiḥ syāt||23||",
    "925:93": "anātmavanto hṛdi yairvidaṣṭā",
    "925:94": "vināśamarchanti na yānti śarma|",
    "925:95": "kuddhograsarpapratimeṣu teṣu",
    "925:96": "kāmeṣu kasyātmavato ratiḥ syāt||24||",
    "925:97": "asthi kṣudhārtā iva sārameyā",
    "925:98": "bhuktvāpi yānnaiva bhavanti tṛptāḥ|",
    "925:99": "jīrṇasthikaṅkālasameṣu teṣu",
    "925:100": "kāmeṣu kasyātmavato ratiḥ syāt||25||",
    "925:101": "ye rājacaurodakapāvakebhyaḥ",
    "925:102": "sādhāraṇatvājjanayanti duḥkham|",
    "925:103": "teṣu praviddhāmiṣasanibheṣu",
    "925:104": "kāmeṣu kasyātmavato ratiḥ syāt||26||",
    "925:105": "yatra sthitānāmabhito vipattiḥ",
    "925:106": "śatroḥ sakāśādapi bāndhavebhyaḥ|",
    "925:107": "hiṃsreṣu teṣvāyatanopameṣu",
    "925:108": "kāmeṣu kasyātmavato ratiḥ syāt||27||",
    "925:109": "girau vane cāpsu ca sāgare ca",
    "925:110": "yān bhraṃśamarchanti vilaṅghamānāḥ|",
    "925:111": "teṣu drumaprāgraphalopameṣu",
    "925:112": "kāmeṣu kasyātmavato ratiḥ syāt||28||",
    "925:113": "tīvraiḥ prayatnairvividhairavāptāḥ",
    "925:114": "kṣaṇena ye nāśamiha prayānti|",
    "925:115": "svapnopabhogapratimeṣu teṣu",
    "925:116": "kāmeṣu kasyātmavato ratiḥ syāt||29||",
    "925:117": "yānarjayitvāpi na yānti śarma",
    "925:118": "vivardhayitvā paripālayitvā|",
    "925:119": "aṅgārakarṣūpratimeṣu teṣu",
    "925:120": "kāmeṣu kasyātmavato ratiḥ syāt||30||",
    "925:121": "vināśamīyuḥ kuravo yadartha",
    "925:122": "vṛṣṇyandhakā mekhaladaṇḍakāśca|",
    "925:123": "sūnāsikāṣṭhapratimeṣu teṣu",
    "925:124": "kāmeṣu kasyātmavato ratiḥ syāt||31||",
    "925:125": "sundopasundāvasurau yadartha-",
    "925:126": "manyonyavairaprasṛtau vinaṣṭau|",
    "925:127": "sauhārdīvaśleṣakareṣu teṣu",
    "925:128": "kāmeṣu kasyātmavato ratiḥ syāt||32||",
    "925:129": "yeṣāṃ kṛte vāriṇi pāvake ca|",
    "925:130": "kravyātsu cātmānamihotsṛjanti|",
    "925:131": "sapatnabhūteṣvaśiveṣu teṣu",
    "925:132": "kāmeṣu kasyātmavato ratiḥ syāt||33||",
    "925:133": "kāmārthamajñaḥ kṛpaṇaṃ karoti",
    "925:134": "prāpnoti duḥkhaṃ vadhabandhanādi|",
    "925:135": "kāmārthamāśākṛpaṇastapasvī",
    "925:136": "mṛtyuṃ śramaṃ cārchati jīvalokaḥ||34||",
    "925:137": "gītairhiyante hi mṛgā vadhāya",
    "925:138": "rūpārthamagnau śalabhāḥ patanti|",
    "925:139": "matsyo giratyāyasamāmiṣārthī",
    "925:140": "tasmādanartha viṣayāḥ phalanti||35||",
    "925:141": "kāmāstu bhogā iti yanmatiḥ syā-",
    "925:142": "dbhogā na kecitparigaṇyamānāḥ",
    "925:143": "vastrādayo dravyaguṇā hi loke",
    "925:144": "duḥkhapratīkāra iti pradhāryāḥ||36||",
    "925:145": "iṣṭaṃ hi tarṣapraśamāya toyaṃ",
    "925:146": "kṣunnāśahetoraśanaṃ tathaiva|",
    "925:147": "vātātapāmbvāvaraṇāya veśma",
    "925:148": "kaupīnaśītāvaraṇāya vāsaḥ||37||",
    "925:149": "nidrāvighātāya tathaiva śayyā",
    "925:150": "yānaṃ tathādhvaśramanāśanāya|",
    "925:151": "tathāsanaṃ sthānavinodanāya",
    "925:152": "snānaṃ mṛjarogyabalāśrayāya||38||",
    "925:153": "duḥkhapratīkāranimittabhūtā-",
    "925:154": "stasmātprajānāṃ viṣayā na bhogāḥ|",
    "925:155": "aśnāmi bhogāniti ko'bhyupeyā-",
    "925:156": "tprājñaḥ pratīkāravidhau pravṛttaḥ||39||",
    "925:157": "yaḥ pittadāhena vidahyamānaḥ",
    "925:158": "śītakriyāṃ bhoga iti vyavasyet|",
    "925:159": "duḥkhapratīkāravidhau pravṛttaḥ",
    "925:160": "kāmeṣu kuryātsa hi bhogasaṃjñām||40||",
    "925:161": "kāmeṣvanaikāntikatā ca yasmā-",
    "925:162": "dato'pi me teṣu na bhogasaṃjñā|",
    "925:163": "ya eva bhāvā hi sukhaṃ diśanti",
    "925:164": "ta eva duḥkhaṃ punarāvahanti||41||",
    "925:165": "gurūṇi vāsāṃsyagurūṇi caiva",
    "925:166": "sukhāya śīte hyusukhāya dharme|",
    "925:167": "candrāṃśavaścandanameva coṣṇe",
    "925:168": "sukhāya duḥkhāya bhavanti śīte||42||",
    "925:169": "dvandvāni sarvasya yataḥ prasaktā-",
    "925:170": "nyalābhalābhaprabhṛtīni loke|",
    "925:171": "ato'pi naikāntasukho'sti kaści-",
    "925:172": "nnaikāntaduḥkha puruṣaḥ pṛthivyām||43||",
    "925:173": "dṛṣṭvā vimiśrāṃ sukhaduḥkhatāṃ me",
    "925:174": "rājyaṃ ca dāsyaṃ ca mataṃ samānam|",
    "925:175": "nityaṃ hasatyeva hi naiva rājā",
    "925:176": "na cāpi saṃtapyata eva dāsaḥ||44||",
    "925:177": "ājñā nṛpatve'bhyadhiketi yatsyā-",
    "925:178": "nmahānti duḥkhānyata eva rājñaḥ|",
    "925:179": "āsaṅgakāṣṭhapratimo hi rājā",
    "925:180": "lokasya hetoḥ parikhedameti||45||",
    "925:181": "rājye nṛpastyāgini bavhamitre",
    "925:182": "viśvāsamāgacchati cedvipannaḥ|",
    "925:183": "athāpi viśrambhamupaiti neha",
    "925:184": "kiṃ nāma saukhyaṃ cakitasya rājñaḥ||46||",
    "925:185": "yadā ca jitvāpi mahīṃ samagrāṃ",
    "925:186": "vāsāya dṛṣṭaṃ puramekameva|",
    "925:187": "tatrāpi caikaṃ bhavanaṃ niṣevyaṃ",
    "925:188": "śramaḥ parārthe nanu rājabhāvaḥ||47||",
    "925:189": "rājño'pi vāsoyugamekameva",
    "925:190": "kṣutsaṃnirodhāya tathānnamātrā|",
    "925:191": "śayyā tathaikāsanamekameva",
    "925:192": "śeṣā viśeṣā nṛpatermadāya||48||",
    "925:193": "tuṣṭyarthametacca phalaṃ yadīṣṭa-",
    "925:194": "mṛte'pi rājyānmama tuṣṭirasti|",
    "925:195": "tuṣṭau ca satyāṃ puruṣasya loke",
    "925:196": "sarve viśeṣā nanu nirviśeṣāḥ||49||",
    "925:197": "tannāsmi kāmān prati saṃpratāryaḥ",
    "925:198": "kṣemaṃ śivaṃ mārgamanuprapannaḥ|",
    "925:199": "smṛtvā suhṛttvaṃ tu punaḥ punarmā",
    "925:200": "brūhi pratijñāṃ khalu pālayeti||50||",
    "925:201": "na hyasmyamarṣeṇa vanaṃ praviṣṭo",
    "925:202": "na śatrubāṇairavadhūtamauliḥ|",
    "925:203": "kṛtaspṛho nāpi phalādhikebhyo",
    "925:204": "gṛhṇāmi naitadvacanaṃ yataste||51||",
    "925:205": "yo dandaśūkaṃ kupitaṃ bhujaṅgaṃ",
    "925:206": "muktvā vyavasyeddhi punargrahītum|",
    "925:207": "dāhātmikāṃ vā jvalitāṃ tṛṇolkāṃ",
    "925:208": "saṃtyajya kāmānsa punarbhajeta||52||",
    "925:209": "andhāya yaśca spṛhayedanandho",
    "925:210": "baddhāya mukto vidhanāya cāḍhyaḥ|",
    "925:211": "unmattacittāya ca kalyacittaḥ",
    "925:212": "spṛhāṃ sa kuryādviṣayātmakāya||53||",
    "925:213": "bhaikṣopabhogīti ca nānukampyaḥ",
    "925:214": "kṛtī jarāmṛtyubhayaṃ titīrṣuḥ|",
    "925:215": "ihottamaṃ śāntisukhaṃ ca yasya",
    "925:216": "paratra duḥkhāni ca saṃvṛtāni||54||",
    "925:217": "lakṣmyāṃ mahatyāmapi vartamāna-",
    "925:218": "stṛṣṇābhibhūtastvanukampitavyaḥ|",
    "925:219": "prāpnoti yaḥ śāntisukhaṃ na ceha",
    "925:220": "paratra duḥkhai pratigṛhyate ca||55||",
    "925:221": "evaṃ tu vaktuṃ bhavato'nurūpaṃ",
    "925:222": "sattvasya vṛttasya kulasya caiva|",
    "925:223": "mamāpi voḍhuṃ sadṛśaṃ pratijñāṃ",
    "925:224": "sattvasya vṛttasya kulasya caiva||56||",
    "925:225": "ahaṃ hi saṃsāraśareṇa viddho",
    "925:226": "viniḥsṛtaḥ śāntimavāptukāmaḥ|",
    "925:227": "neccheyamāptuṃ tridive'pi rājyaṃ",
    "925:228": "nirāmayaṃ kiṃ bata mānuṣeṣu||57||",
    "925:229": "trivargasevāṃ nṛpa yattu kṛtsnataḥ",
    "925:230": "paro manuṣyārtha iti tvamāttha mām|",
    "925:231": "anartha ityeva mamātra darśanaṃ",
    "925:232": "kṣayī trivargo hi na cāpi tarpakaḥ||58||",
    "925:233": "pade tu yasminna jarā na bhīrna rūṅ",
    "925:234": "na janma naivoparamo na cādhayaḥ|",
    "925:235": "tameva manye puruṣārthamuttamaṃ",
    "925:236": "na vidyate yatra punaḥ punaḥ kriyā||59||",
    "925:237": "yadapyavoca paripālyatāṃ jarā",
    "925:238": "nava vayo gacchati vikriyāmiti|",
    "925:239": "aniścayo'ya capalaṃ hi dṛśyate",
    "925:240": "jarāpyadhīrā dhṛtimacca yauvanam||60||",
    "925:241": "svakarmadakṣaśca yadāntako jagad",
    "925:242": "vayasu sarveṣvavaśa vikarṣati|",
    "925:243": "vināśakāle kathamavyavasthite",
    "925:244": "jarā pratīkṣyā viduṣā śamepsunā||61||",
    "925:245": "jarāyudho vyādhivikīrṇasāyako",
    "925:246": "yadāntako vyādha ivāśivaḥ sthitaḥ|",
    "925:247": "prajāmṛgān bhāgyavanāśritāṃstudan",
    "925:248": "vayaḥprakarṣa prati ko manorathaḥ||62||",
    "925:249": "ato yuvā vā sthaviro'thavā śiśu-",
    "925:250": "stathā tvarāvāniha kartumarhati|",
    "925:251": "yathā bhaveddharmavataḥ kṛtātmanaḥ",
    "925:252": "pravṛttiriṣṭā vinivṛttireva vā||63||",
    "925:253": "yadāttha cāpīṣṭaphalāṃ kulocitāṃ",
    "925:254": "kuruṣva dharmāya makhakriyāmiti|",
    "925:255": "namo makhebhyo na hi kāmaye sukhaṃ",
    "925:256": "parasya duḥkhakriyayā yadiṣyate||64||",
    "925:257": "paraṃ hi hantuṃ vivaśaṃ phalepsayā",
    "925:258": "na yuktarūpa karuṇātmanaḥ sataḥ|",
    "925:259": "kratoḥ phalaṃ yadyapi śāśvataṃ bhave-",
    "925:260": "ttathāpi kṛttvā kimu yatkṣayātmakam||65||",
    "925:261": "bhavecca dharmo yadi nāparo vidhi-",
    "925:262": "rvratena śīlena manaḥśamena vā|",
    "925:263": "tathāpi naivārhati sevituṃ kratuṃ",
    "925:264": "viśasya yasmin paramucyate phalam||66||",
    "925:265": "ihāpi tāvatpuruṣasya tiṣṭhataḥ",
    "925:266": "pravartate yatparahiṃsayā sukham|",
    "925:267": "tadapyaniṣṭaṃ saghṛṇasya dhīmato",
    "925:268": "bhavāntare kiṃ bata yanna dṛśyate||67||",
    "925:269": "na ca pratāryo'smi phalapravṛttaye",
    "925:270": "bhaveṣu rājan ramate na me manaḥ|",
    "925:271": "latā ivāmbhodharavṛṣṭitāḍitāḥ",
    "925:272": "pravṛttayaḥ sarvagatā hi cañcalāḥ||68||",
    "925:273": "ihāgataścahamito didṛkṣayā",
    "925:274": "munerarāḍasya vimokṣavādinaḥ|",
    "925:275": "prayāmi cādyaiva nṛpāstu te śivaṃ",
    "925:276": "vacaḥ kṣamethā mama tattvaniṣṭhuram||69||",
    "925:277": "avendravaddivyava śaśvadarkavad",
    "925:278": "guṇairava śreya ihāva gāmava|",
    "925:279": "avāyurāryairava satsutānava",
    "925:280": "śriyaśca rājannava dharmamātmanaḥ||70||",
    "925:281": "himāriketūdbhavasaṃbhavāntare",
    "925:282": "yathā dvijo yāti vimokṣayaṃstanum|",
    "925:283": "himāriśatrukṣayaśatrughātane",
    "925:284": "tathāntare yāhi vimokṣayanmanaḥ||71||",
    "925:285": "nṛpo'bravītsāñjalirāgataspṛho",
    "925:286": "yatheṣṭamāpnotu bhavānavighnataḥ|",
    "925:287": "avāpya kāle kṛtakṛtyatāmimāṃ",
    "925:288": "mamāpi kāryo bhavatā tvanugrahaḥ||72||",
    "925:289": "sthiraṃ pratijñāya tatheti pārthive",
    "925:290": "tataḥ sa vaiśvaṃtaramāśramaṃ yayau|",
    "925:291": "parivrajantaṃ tamudīkṣya vismito",
    "925:292": "nṛpo'pi vavrāja puri girivrajam||73||",
    "925:293": "iti buddhacarite mahākāvye",
    "925:294": "kāmavigarhaṇo nāmaikādaśa sargaḥ||11||"
}