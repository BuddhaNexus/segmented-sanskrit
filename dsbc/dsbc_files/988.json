{
    "988:0": "(29) mārgavargaḥ",
    "988:1": "āryacatuṣṭayopāsakaḥ pāraṃ gacchati",
    "988:2": "satyāni catvāri śivāni tāni,",
    "988:3": "subhāvitānyeva samīkṣya vidvān|",
    "988:4": "sucintako jāti-jarā-bhayebhyaḥ,",
    "988:5": "pramucyaye pāramupaiti śāntaḥ ||1||",
    "988:6": "kāmeṣu saktaḥ bhavabhogabaddhaḥ bhavati",
    "988:7": "acintako yastu vibhūtabuddhiḥ",
    "988:8": "kāmeṣu sakto bhavabhogabaddhaḥ |",
    "988:9": "sa bandhanaiḥ kāmamayairnibaddho,",
    "988:10": "na mucyate jāti-jarā-bhayebhyaḥ ||2||",
    "988:11": "bhavārṇave sukhadraṣṭā ante narakaṃ yāti",
    "988:12": "vicintya yo duḥkhamidaṃ viśālaṃ,",
    "988:13": "na khedamāyāti bhavārṇavebhyaḥ |",
    "988:14": "sa kāmavāṇairnihato hi mūḍhaḥ,",
    "988:15": "kaṣṭāmavasthāṃ narake'pi yāti ||3||",
    "988:16": "ābhyantaraṃ kṣemasukhaṃ ca hitvā,",
    "988:17": "kiṃ kāmabhogābhiratā hi bālāḥ |",
    "988:18": "naite bijānanti bhayaṃ ca tīvra-",
    "988:19": "mabhyeti mṛtyurjvalanaprakāśaḥ ||4||",
    "988:20": "tattvamārgapradarśakaiḥ kimuktam?",
    "988:21": "anityaduḥkhaśūnyo'yamātmā kārakavarjitaḥ |",
    "988:22": "saṃsāraḥ kathito buddhaiḥ tattvamārgapradarśakaiḥ ||5||",
    "988:23": "tena sarvamidaṃ tattvajñānaṃ jñeyaṃ samāsataḥ |",
    "988:24": "jñānajñeyavinirmuktaṃ tṛtīyaṃ nopalabhyate ||6||",
    "988:25": "kaḥ tattvavidhijñaḥ?",
    "988:26": "antapāravidhijño yaḥ ṣoḍaśākāratattvavit |",
    "988:27": "ūrdhvagatividhijño hi kṣāntitattvavicakṣaṇaḥ ||7||",
    "988:28": "tattvavideva dharmatāmanuviśati",
    "988:29": "agralokaikadharmajñaḥ samanantaratattvavit |",
    "988:30": "sa dharmatāmanuviśed yathā (ca)",
    "988:31": "na vikampate ||8||",
    "988:32": "dvayopāyavinirmukto naṣṭān nāśayate muhuḥ |",
    "988:33": "naṣṭapāpagatirvīraḥ strotāpanno nirucyate ||9||",
    "988:34": "srotāṃsya kuśalā dharmā jīryante pāpagāminaḥ |",
    "988:35": "mokṣāgninā pratapyante srotāpanno bhavatyataḥ ||10||",
    "988:36": "prasrabdhijaṃ mahodarkamuktaṃ saṃsāramokṣakam |",
    "988:37": "tṛṣṇākṣayasukhaṃ dṛṣṭaṃ satyataḥ sukhakārakam ||11||",
    "988:38": "kaḥ sadaiva sukhī bhavati?",
    "988:39": "nāvabadhnāti yaṃ tṛṣṇā na vitarkairvihasyate |",
    "988:40": "samprāptabhavapārastu sukhī bhavati sarvadā ||12||",
    "988:41": "ārya mārgacatuṣṭayam anyonyaphalasambhūtam",
    "988:42": "anyonyaphalasambhūta sarvataḥ sampravartate |",
    "988:43": "tadeva kāraṇaṃ jñeyamāryamārgacatuṣṭayam ||13||",
    "988:44": "āryasatyeṣu viditaḥ puruṣo vidyate dhruvam |",
    "988:45": "viṣayeṣu hi saṃghuṣṭaṃ jagad bhramati cakravat ||14||",
    "988:46": "kaḥ śreṣṭho mārgaḥ?",
    "988:47": "sa mārgo deśakaḥ śreṣṭho yo mārgo bhāṣitaḥ śivaḥ |",
    "988:48": "yena mārgeṇa prācīnā (dhruvaṃ)",
    "988:49": "yātā manīṣiṇaḥ ||15||",
    "988:50": "triśaraṇagata eva sukhaṃ jīvati",
    "988:51": "sujīvitaṃ bhavet tasya yasya buddhau sthitaṃ manaḥ |",
    "988:52": "nahi buddhivinirmuktaṃ jīvitaṃ jīvitaṃ bhavet ||16||",
    "988:53": "sujīvitaṃ bhavet tasya yasya dharme sthitaṃ manaḥ |",
    "988:54": "nahi dharmavinirmuktaṃ jīvitaṃ jīvitaṃ bhavet ||17||",
    "988:55": "sujīvitaṃ bhavet tasya yasya saṅghe sthitaṃ manaḥ |",
    "988:56": "nahi saṅghavinirmuktaṃ jīvitaṃ jīvitaṃ bhavet ||18||",
    "988:57": "keṣāṃ sujīvitaṃ jīvanam?",
    "988:58": "sujīvitaṃ bhavet tasya yasya satye sthitaṃ manaḥ |",
    "988:59": "nahi satyavinirmuktaṃ jīvitaṃ jīvitaṃ bhavet ||19||",
    "988:60": "sujīvitaṃ bhavet tasya yasya mārge sthitaṃ manaḥ |",
    "988:61": "nahi mārgavinirmuktaṃ jīvitaṃ jīvitaṃ bhavet ||20||",
    "988:62": "nirvāṇagamane yasya nityaṃ buddhiravasthitā |",
    "988:63": "sa doṣādeva nirmukto na devaḥ krīḍati svayam ||21||",
    "988:64": "kīdṛśī krīḍā sukhodbhāvikā?",
    "988:65": "yā bhavavyāpinī krīḍā nityamekāgracetasaḥ |",
    "988:66": "sā sukhodbhāvikā krīḍā na krīḍā rāgakārikā ||22||",
    "988:67": "kena mārgeṇa śivaṃ sthānaṃ milati?",
    "988:68": "sukhādīniha satyāni yathā dāntena vindati |",
    "988:69": "tadā kṣemaṃ śivaṃ sthānaṃ prāpnoti puruṣottamaḥ ||23||",
    "988:70": "||iti mārgavarga ekonatriṃśaḥ ||"
}