{
  "SA20n1391:0": " || namo mañjuśriye kumārabhūtāya ||",
  "SA20n1391:1": "ācāryavasubandhupraṇītaḥ",
  "SA20n1391:2": "trisvabhāvanirdeśaḥ",
  "SA20n1391:3": "kalpitaḥ paratantraśca pariniṣpanna eva ca |",
  "SA20n1391:4": "trayaḥ svabhāvā dhīrāṇāṃ gambhīrajñeyamiṣyate ||1 ||",
  "SA20n1391:5": "yat khyāti paratantro'sau yathā khyāti sa kalpitaḥ |",
  "SA20n1391:6": "pratyayādhīnavṛttitvāt kalpanāmātrabhāvataḥ ||2 ||",
  "SA20n1391:7": "tasya khyāturyathākhyānaṃ yā sadā'vidyamānatā |",
  "SA20n1391:8": "jñeyaḥ sa pariniṣpannasvabhāvo'nanyathātvataḥ ||3 ||",
  "SA20n1391:9": "tatra kiṃ khyātyasatkalpaḥ kathaṃ khyāti dvayātmanā |",
  "SA20n1391:10": "tasya kā nāstitā tena yā tatrā'dvayadharmatā ||4 ||",
  "SA20n1391:11": "asatkalpo'tra kaścittaṃ yatastena hi kalpyate |",
  "SA20n1391:12": "yathā ca kalpayatyartha tathā'tyantaṃ na vidyate ||5 ||",
  "SA20n1391:13": "taddhetuphalabhāvena cittaṃ dvividhamiṣyate |",
  "SA20n1391:14": "yadālayākhyaṃ vijñānaṃ pravṛttyākhyaṃ ca saptadhā ||6 ||",
  "SA20n1391:15": "saṃkleśavāsanābījaiścitatvāccittamucyate |",
  "SA20n1391:16": "cittamādyaṃ dvitīyaṃ tu citrākārapravṛttitaḥ ||7 ||",
  "SA20n1391:17": "samāsato'bhūtakalpaḥ sa caiṣa trividho mataḥ |",
  "SA20n1391:18": "vaipākikastathā naimittiko'nyaḥ prātibhāsikaḥ ||8 ||",
  "SA20n1391:19": "prathamo mūlavijñānaṃ tadvipākātmakaṃ yataḥ |",
  "SA20n1391:20": "anyaḥ pravṛttivijñānaṃ dṛśyadṛgvittivṛttitaḥ ||9 ||",
  "SA20n1391:21": "sadasattvād dvayaikatvāt saṃkleśavyavadānayoḥ |",
  "SA20n1391:22": "lakṣaṇābhedataśceṣṭā svabhāvānāṃ gaṃbhīratā ||10 ||",
  "SA20n1391:23": "sattvena gṛhyate yasmādatyantābhāva eva ca |",
  "SA20n1391:24": "svabhāvaḥ kalpitastena sadasallakṣaṇo mataḥ ||11 ||",
  "SA20n1391:25": "vidyate bhrāntibhāvena yathākhyānaṃ na vidyate |",
  "SA20n1391:26": "paratantro yatastena sadasallakṣaṇo mataḥ ||12 ||",
  "SA20n1391:27": "advayatvena yaccāsti dvayasyābhāva eva ca |",
  "SA20n1391:28": "svabhāvastena niṣpannaḥ sadasallakṣaṇo mataḥ ||13 ||",
  "SA20n1391:29": "dvaividhyāt kalpitārthasya tadasattvaikabhāvataḥ |",
  "SA20n1391:30": "svabhāvaḥ kalpito bālairdvayaikatvātmako mataḥ ||14 ||",
  "SA20n1391:31": "prakhyānād dvayabhāvena bhrāntimātraikabhāvataḥ |",
  "SA20n1391:32": "svabhāvaḥ paratantrākhyo dvayaikatvātmako mataḥ ||15 ||",
  "SA20n1391:33": "dvayābhāvasvabhāvatvādadvayaikasvabhāvataḥ |",
  "SA20n1391:34": "svabhāvaḥ pariniṣpanno dvayaikatvātmako mataḥ ||16 ||",
  "SA20n1391:35": "kalpitaḥ paratantraśca jñeyaṃ saṃkleśalakṣaṇam |",
  "SA20n1391:36": "pariniṣpanna iṣṭastu vyavadānasya lakṣaṇam ||17 ||",
  "SA20n1391:37": "asaddvayasvabhāvatvāt tadabhāvasvabhāvataḥ |",
  "SA20n1391:38": "svabhāvāt kalpitājjñeyo niṣpanno'bhinnalakṣaṇaḥ ||18 ||",
  "SA20n1391:39": "advayatvasvabhāvatvād dvayābhāvasvabhāvataḥ |",
  "SA20n1391:40": "niṣpannāt kalpitaścaiva vijñeyo'bhinnalakṣaṇaḥ ||19 ||",
  "SA20n1391:41": "yathākhyānamasadbhāvāt tathā'sattvasvabhāvataḥ |",
  "SA20n1391:42": "svabhāvāt paratantrākhyānniṣpanno'bhinnalakṣaṇaḥ ||20 ||",
  "SA20n1391:43": "asaddvayasvabhāvatvād yathākhyānāsvabhāvataḥ |",
  "SA20n1391:44": "niṣpannāt paratantro'pi vijñeyo'bhinnalakṣaṇaḥ ||21 ||",
  "SA20n1391:45": "kramabhedaḥ svabhāvānāṃ vyavahārādhikārataḥ |",
  "SA20n1391:46": "tatpraveśādhikārācca vyutpattyarthaṃ vidhīyate ||22 ||",
  "SA20n1391:47": "kalpito vyavahārātmā vyavahartrātmako'paraḥ |",
  "SA20n1391:48": "vyavahārasamucchedasvabhāvaścānya iṣyate ||23 ||",
  "SA20n1391:49": "dvayābhāvātmakaḥ pūrvaṃ paratantraḥ praviśyate |",
  "SA20n1391:50": "tataḥ praviśyate tatra kalpamātramasaddvayam ||24 ||",
  "SA20n1391:51": "tato dvayābhāvabhāvo niṣpanno'tra praviśyate |",
  "SA20n1391:52": "tathā hyasāveva tadā astināstīti cocyate ||25 ||",
  "SA20n1391:53": "trayo'pyete svabhāvā hi advayālambalakṣaṇāḥ |",
  "SA20n1391:54": "abhāvādatathābhāvāt tadabhāvasvabhāvataḥ ||26 ||",
  "SA20n1391:55": "māyākṛtaṃ mantravaśāt khyāti hastyātmanā yathā |",
  "SA20n1391:56": "ākāramātraṃ tatrāsti hastī nāsti tu sarvathā ||27 ||",
  "SA20n1391:57": "svabhāvaḥ kalpito hastī paratantrastadākṛtiḥ |",
  "SA20n1391:58": "yastatra hastyabhāvo'sau pariniṣpanna iṣyate ||28 ||",
  "SA20n1391:59": "asatkalpastathā khyāti mūlacittād dvayātmanā |",
  "SA20n1391:60": "dvayamatyantato nāsti tatrāstyākṛtimātrakam ||29 ||",
  "SA20n1391:61": "mantravanmūlavijñānaṃ kāṣṭhavattathatā matā |",
  "SA20n1391:62": "hastyākāravadeṣṭavyo vikalpo hastivad dvayam ||30 ||",
  "SA20n1391:63": "arthatattvaprativedhe yugapallakṣaṇatrayam |",
  "SA20n1391:64": "parijñā ca prahāṇaṃ ca prāptiśceṣṭā yathākramam ||31 ||",
  "SA20n1391:65": "parijñā'nupalambho'tra hānirakhyānamiṣyate |",
  "SA20n1391:66": "upalambhanimittā tu prāptiḥ sākṣātkriyā'pi sā ||32 ||",
  "SA20n1391:67": "dvayasyānupalambhena dvayākāro vigacchati |",
  "SA20n1391:68": "vigamāt tasya niṣpanno dvayābhāvo'dhigamyate ||33 ||",
  "SA20n1391:69": "hastino'nupalambhaśca vigamaśca tadākṛteḥ |",
  "SA20n1391:70": "upalambhaśca kāṣṭhasya māyāyāṃ yugapad yathā ||34 ||",
  "SA20n1391:71": "viruddhadhīvāraṇatvād buddhyā vaiyarthyadarśanāt |",
  "SA20n1391:72": "jñānatrayānuvṛtteśca mokṣāpattirayatnataḥ ||35 ||",
  "SA20n1391:73": "cittamātropalambhena jñeyārthānupalambhatā |",
  "SA20n1391:74": "jñeyārthānupalambhena syāccittānupalambhatā ||36 ||",
  "SA20n1391:75": "dvayoranupalambhena dharmadhātūpalabhbhatā |",
  "SA20n1391:76": "dharmadhātūpalambhena syād vibhutvopalambhatā ||37 ||",
  "SA20n1391:77": "upalabdhavibhutvaśca svaparārthaprasiddhitaḥ |",
  "SA20n1391:78": "prāpnotyanuttarāṃ bodhiṃ dhīmān kāyatrayātmikām ||38 ||",
  "SA20n1391:79": "iti trisvabhāvanirdeśaḥ samāptaḥ ||",
  "SA20n1391:80": "kṛtirācāryavasubandhupādānāmiti ||"
}