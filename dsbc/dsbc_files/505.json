{
    "505:0": "indraketudhvajarājaparivartaḥ ||",
    "505:1": "tatra khalu bhagavāṃścandraprabhaṃ kumārabhūtamāmantrayate sma-tasmāttarhi kumāra bodhisattvena mahāsattvena sarvakuśalamūlaśikṣāguṇadharmaniśritena bhavitavyam |",
    "505:2": "asaṃsargabahulena ca bhavitavyam,",
    "505:3": "pāpamitraparivarjakena kalyāṇamitrasaṃniśritena paripṛcchakajātīyena dharmaparyeṣṭyāmatṛptena prāmodyabahulena dharmārthikena dharmakāmena dharmaratena dharmaparigrāhakeṇa dharmānudharmapratipannena |",
    "505:4": "śāstṛsaṃjñā anena sarvabodhisattveṣūtpādayitavyā |",
    "505:5": "yasya cāntikādimaṃ dharmaparyāyaṃ śṛṇoti,",
    "505:6": "tena tasyāntike prītigauravaṃ śāstṛsaṃjñā cotpāditavyā|",
    "505:7": "yaḥ kumāra bodhisattvo mahāsattva imān dharmān samādāya vartate,",
    "505:8": "sa kṣipramanācchedyapratibhāvaniryāto bhavati |",
    "505:9": "acintyabuddhadharmādhimuktaśca bhavati |",
    "505:10": "gambhīreṣu ca dharmeṣu nidhyaptiṃ gacchati |",
    "505:11": "ālokabhūtaśca bhavati sadevakasya lokasya kāṅkṣāvimativicikitsāndhakāravidhamanatayā ||",
    "505:12": "atha khalu bhagavāṃstasyāṃ velāyāmimā gāthā abhāṣata-",
    "505:13": "abhyatīta bahukalpakoṭiyo",
    "505:14": "aprameya atulā acintiyāḥ |",
    "505:15": "yad abhūṣi dvipadānamuttamo",
    "505:16": "indraketudhvajarāja nāyakaḥ || 1 ||",
    "505:17": "so samādhimimu śāntu deśayi",
    "505:18": "yatra nāsti naru jīva pudgalaḥ |",
    "505:19": "māya budbuda marīci vidyutā",
    "505:20": "sarva dharma dakacandrasaṃnibhāḥ || 2 ||",
    "505:21": "nāsti sattva manujo ca labhyate",
    "505:22": "kālu kṛtva paraloki gacchi yo |",
    "505:23": "no ca karma kṛtu vipraṇaśyate",
    "505:24": "kṛṣṇa śukla phala deti tādṛśam || 3 ||",
    "505:25": "eṣa yukti nayadvāra bhadrakaṃ",
    "505:26": "sūkṣma durdṛśu jināna gocarā |",
    "505:27": "yatra akṣarapadaṃ na labhyate",
    "505:28": "buddhabodhi bhagavān prajānati || 4 ||",
    "505:29": "dhāraṇī vipulajñānasaṃcayā",
    "505:30": "sūtrakoṭiniyutāna āgatā |",
    "505:31": "buddhakoṭiniyutāna gocara-",
    "505:32": "staṃ samādhi bhagavān prabhāṣate || 5 ||",
    "505:33": "āturāṇamaya vyādhimocako",
    "505:34": "bodhisattvasamudānitaṃ dhanam |",
    "505:35": "sarvabuddhastuta saṃprakāśito",
    "505:36": "devakoṭiniyutehi pūjitaḥ || 6 ||",
    "505:37": "sarva bālajana bhūtacodanā",
    "505:38": "tīrthikehi parivarjitaḥ sadā |",
    "505:39": "śreṣṭha śīladhanu buddhavarṇitaṃ",
    "505:40": "vidyuteva gagane na lipyate || 7 ||",
    "505:41": "yehi pūjita jināna koṭiyo",
    "505:42": "dānaśīlacaritā vicakṣaṇāḥ |",
    "505:43": "pāpamitra puri yehi varjitā",
    "505:44": "teṣa paitṛkadhanaṃ niruttaram || 8 ||",
    "505:45": "tatra bhikṣu sthitu dharmabhāṇako",
    "505:46": "brahmacāri sugatasya aurasaḥ |",
    "505:47": "śrutva dharmamimamānulomikaṃ",
    "505:48": "citta pādesi ya lokanāyakaḥ || 9 ||",
    "505:49": "indraketudhvajarāju nāyako",
    "505:50": "adhyabhāṣi abhu dharmabhāṇakam |",
    "505:51": "bhikṣubhāva paramaṃ ti duṣkaraṃ",
    "505:52": "cittupāda vara agrabodhaye || 10 ||",
    "505:53": "śīlu rakṣa maṇiratnasaṃnibhaṃ",
    "505:54": "mitra seva sada ānulomikam |",
    "505:55": "pāpamitra na kadāci sevato",
    "505:56": "buddhajñānamacireṇa lapsyase || 11 ||",
    "505:57": "iti śrīsamādhirāje indraketudhvajarājaparivarto nāma viṃśatitamaḥ ||"
}