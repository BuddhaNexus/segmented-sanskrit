{
    "851:0": "mahākālastotram",
    "851:1": "namasyāmi mahākālaṃ sarvasampattidāyakam |",
    "851:2": "kharvaṃ lambodaraṃ nīlamaṣṭanāgavibhūṣitam || 1 ||",
    "851:3": "dvibhujaikamukhaṃ vīraṃ kapālakṛtaśekharam |",
    "851:4": "vyāghracarmakaṭīveṣṭaṃ śatārdhamuṇḍamālinam || 2 ||",
    "851:5": "bhāvābhāvaparicchinnaṃ jagatsaṃbodhakārakam |",
    "851:6": "sarvabhāvātmakaṃ nāthaṃ jagannātha namo'stu te || 3 ||",
    "851:7": "kṛṣṇavarṇaṃ mahātejaṃ siddhasādhakarakṣakam |",
    "851:8": "kartikapālinaṃ nāthaṃ mahākāla namo'stu te || 4 ||",
    "851:9": "vyāghracarmāmbaradharaṃ mahākrodhasvarūpiṇam |",
    "851:10": "dvādaśādityasaṃkāśaṃ mahākāla namo'stu te || 5 ||",
    "851:11": "mahādaṃṣṭrākarālāsyaṃ lalajjihvaṃ sabhairavam |",
    "851:12": "mahāraktābhanayanaṃ mahākāla namo'stu te || 6 ||",
    "851:13": "vibhrannaraśiromālāṃ nāgarājavibhūṣitam |",
    "851:14": "śmaśrutundilakaṃ vandyaṃ mahākāla namo'stu te || 7 ||",
    "851:15": "sabhrūbhaṅgaṃ trinetraṃ caivordhvapiṅgordhvakesaram |",
    "851:16": "yugāntānalapuñjābhaṃ mahākāla namo'stu te || 8 ||",
    "851:17": "trāsakaṃ sarvadaityānā(masthya)",
    "851:18": "sṛṅmāṃsabhakṣakam |",
    "851:19": "rakṣitāraṃ bhaktimatāṃ mahākāla namo'stu te || 9 ||",
    "851:20": "siddhisādhanamantrasya viheṭhījyanarāśanam |",
    "851:21": "yugmasyāśvāsadātāraṃ mahākāla namo'stu te || 10 ||",
    "851:22": "saṃsārajaladheḥ pāraṃ naukā yānaikagāminī |",
    "851:23": "naukāyāne svatejāstvaṃ mahākāla namo'stu te || 11 ||",
    "851:24": "mahākālastavaṃ caitad yaḥ paṭhed bhaktimān naraḥ |",
    "851:25": "bhayārto mucyate bhīteraricintā nivartate || 12 ||",
    "851:26": "mahākālaṃ namaskṛtya yathoktakulajanmataḥ |",
    "851:27": "tena sujanmā bhavati sarvasiddhiparāyaṇaḥ || 13 ||",
    "851:28": "śrīmahākālastotraṃ sampūrṇam |"
}