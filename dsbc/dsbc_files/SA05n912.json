{
  "SA05n912:0": "vasudhārāstotram",
  "SA05n912:1": "yā samyaguktavidhibhiḥ paripathyamānā",
  "SA05n912:2": "lakṣmīṃ dadāti vipulāṃ sugatopabhogān |",
  "SA05n912:3": "tāṃ dhāraṇīṃ sakalasattvahitaikacittāṃ",
  "SA05n912:4": "bhaktyā namāmi satataṃ vasudhārasaṃjñām || 1 ||",
  "SA05n912:5": "yā saṃsmṛtā sucirasusthataraṃ pravṛddhaṃ",
  "SA05n912:6": "dāridrayaduḥkhaduritaṃ śamate narāṇām |",
  "SA05n912:7": "tāṃ kalpavṛkṣasadṛśīṃ vasudhārasaṃjñāṃ",
  "SA05n912:8": "nityaṃ namāmi śirasā jagatāṃ hitāya || 2 ||",
  "SA05n912:9": "ratnākarīṃ ratnanidhānakoṣāṃ",
  "SA05n912:10": "vicitraratnāṃ pratibhāsavarṣām |",
  "SA05n912:11": "ratnāvalīṃ ratnamayīṃ vicitrāṃ",
  "SA05n912:12": "namāmi cāryāṃ vasudhāradhārām || 3 ||",
  "SA05n912:13": "tāṃ ratnapāṇisaphalāmavabhāsayā te",
  "SA05n912:14": "tyāgāvataṃsadayaśekharamudvahantīm |",
  "SA05n912:15": "hārārdhahāracalakuṇḍalabhūṣitāṅgī-",
  "SA05n912:16": "māryāṃ namāmi vasuvṛṣṭikarīṃ śaraṇyām || 4 ||",
  "SA05n912:17": "śrīvasudhārākalpoddhṛtaṃ vasudhārāstotraṃ samāptam |"
}