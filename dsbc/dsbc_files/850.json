{
    "850:0": "mahācakravartināmāṣṭottaraśatastotram",
    "850:1": "vajrasattva mahāvajra vajranātha susādhaka |",
    "850:2": "vajrābhiṣeka vajrābha vajraketu (to) namo'stu te || 1 ||",
    "850:3": "hāsavajra mahādharma vajrakośa mahāvara |",
    "850:4": "sarvamaṇḍalarājāgrya niṣprapañca namo'stu te || 2 ||",
    "850:5": "vajrakarma mahārakṣa caṇḍayakṣa mahāgraha |",
    "850:6": "vajramuṣṭi mahāmudra sarvamudra namo'stu te || 3 ||",
    "850:7": "bodhicitta mahābodhe buddha sarvatathāgata |",
    "850:8": "vajrayāna mahājñāna mahāyāna namo'stu te || 4 ||",
    "850:9": "sarvārtha sarvatattvārtha mahāsattvārtha sarvavit |",
    "850:10": "sarvajña sarvakṛt sarva sarvadarśi namo'stu te || 5 ||",
    "850:11": "vajrātmaka suvajrāgrya vajravīrya suvajradhṛk |",
    "850:12": "mahāsamaya tattvārtha mahāsatya namo'stu te || 6 ||",
    "850:13": "vajrāṅkuśa mahākāma surate sumahāprabha |",
    "850:14": "vajraprabha prabhodyota buddhaprabha namo'stu te || 7 ||",
    "850:15": "vajrarājāgrya vajrāgrya vidyāgryāgrya narottama |",
    "850:16": "vajrottama mahāgryāgrya vidyottama namo'stu te || 8 ||",
    "850:17": "vajradhāto mahāguhya vajraguhya suguhyadhṛk |",
    "850:18": "vajrasūkṣma mahādhyāna vajrakārya namo'stu te || 9 ||",
    "850:19": "buddhāgrya buddhavajrāgrya buddhabodhe mahābudha |",
    "850:20": "buddhajñāna mahābuddha buddhabuddha namo'stu te || 10 ||",
    "850:21": "buddhapūjā-mahāpūjā-sattvapūjāsupūjaka |",
    "850:22": "mahopāya mahāsiddhe vajrasiddhi namo'stu te || 11 ||",
    "850:23": "tathāgata mahākāya tathāgatasarasvate |",
    "850:24": "tathāgatamahācitta vajracitta namo'stu te || 12 ||",
    "850:25": "buddhādhipa jinājñākṛd buddhamitra jināgraja |",
    "850:26": "mahāvairocana vibho śāntaraudra namo'stu te || 13 ||",
    "850:27": "tathāgatamahātattva bhūtakoṭe mahānaya |",
    "850:28": "sarvapāramitājñāna paramārtha namo'stu te || 14 ||",
    "850:29": "samantabhadra caryāgrya māra mārapramadarka |",
    "850:30": "sarvāgrya samatājñāna sarvatraga namo'stu te || 15 ||",
    "850:31": "buddhahuṃkara huṃkāra vajrahuṃkara dāmaka |",
    "850:32": "viśvavajrāḍga vajrogra vajrapāṇe namo'stu te || 16 ||",
    "850:33": "vandayaḥ pūjyaśca mānyaśca satkartavyastathāgataiḥ |",
    "850:34": "yasmād vajradṛḍhaṃ cittaṃ vajrasattvastvamucyase || 17 ||",
    "850:35": "tvadadhīnā hi saṃbodhiḥ pitā tvaṃ sarvadarśinām |",
    "850:36": "saṃbhūtāḥ saṃbhaviṣyanti tvāmāsādya tathāgatāḥ || 18 ||",
    "850:37": "anena stotrarājena yaḥ stuyādbai subhaktitaḥ |",
    "850:38": "yo gāyaṃstu stuyāt so'pi bhavedvajradharopamaḥ || 19 ||",
    "850:39": "adhyeṣayāmastvāṃ nātha sarvabuddhavaśaṃkaram |",
    "850:40": "sarvasattvārthakāryārthamutpādaya svakaṃ kulam || 20 ||",
    "850:41": "mahācakravartināmāṣṭottaraśatādhyeṣaṇāstotraṃ sampūrṇam |"
}