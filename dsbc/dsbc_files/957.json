{
    "957:0": "yaśodharācaritam",
    "957:1": "śrī siddhārthaḥ kapilanagare bodhisattvaḥ saputrāṃ",
    "957:2": "devīṃ tyaktvā sakalavibhavaṃ cakravartiśriyaṃ ca |",
    "957:3": "māsy āṣāḍhe viratamanasā pūrṇimāyāṃ niśīthe",
    "957:4": "niścakrāma śramaṇapadabhṛn mokṣam anveṣṭukāmaḥ ||1||",
    "957:5": "atha prabhāte śayanāt samutthitā",
    "957:6": "sutena sārdhaṃ mahiṣī yaśodharā |",
    "957:7": "didṛkṣayā svāmivarasya satvaraṃ",
    "957:8": "gatāvidūre śayanīyamandiram ||2||",
    "957:9": "yathā pure vañcayituṃ sa me patī",
    "957:10": "rahogataḥ kutra cid eva gūḍhavān |",
    "957:11": "vicintya saudhe 'ntarabāhiraṃ bhṛśaṃ",
    "957:12": "parīkṣyamāṇāpi dadarśa naiva tam ||3||",
    "957:13": "dadhāva tasmāt sacivasya mandiraṃ",
    "957:14": "gavākṣam udghāṭya drutaṃ drutaṃ śucā |",
    "957:15": "kapāṭam āhatya dṛḍhaṃ muhur muhur",
    "957:16": "vyarīravac channa bhavan bhavann iti ||4||",
    "957:17": "apekṣya kiṃ cit kvaṇam antarād gṛhe",
    "957:18": "vyatiṣṭhatālpaṃ pratihārasannidhau |",
    "957:19": "vicārabhaṅgāc chvasatī ca pāṇinā",
    "957:20": "pratāḍayām āsa kapolayugmakam ||5||",
    "957:21": "tato gatā sā nṛpamandurālayaṃ",
    "957:22": "turaṅgamaṃ nātra dadarśa kanthakam |",
    "957:23": "kuto yayau kiṃ rahasā sa vallabho",
    "957:24": "vitarkayantīti babhūva mūrchitā ||6||",
    "957:25": "vicintya yat kiṃ cid itas tataḥ śiraś",
    "957:26": "cacāla jaghrau ca mukhe sutasya sā |",
    "957:27": "bhujātapatreṇa vilocanadvayān",
    "957:28": "nyavārayat sā sravadaśruśīkaram ||7||",
    "957:29": "aśaknuvantī nitarāṃ samudgamāṃ",
    "957:30": "manovyathāṃ soḍhum udagramanyunā |",
    "957:31": "patipradattaṃ maṇikaṇṭhabhūṣaṇaṃ",
    "957:32": "pravālamālām api kuṇḍaladvayam ||8||",
    "957:33": "lalāṭikāṃ hemamayāṅgulīyakaṃ",
    "957:34": "hiraṇyasūtreṇa nibaddhamekhalām |",
    "957:35": "vimucya śīrṣābharaṇaṃ ca kaṅkaṇe",
    "957:36": "sasarja dhig dhig vadatī sasambhramam ||9||",
    "957:37": "atītaḍat pādatalena bhūtalaṃ",
    "957:38": "jajṛmbha ūrdhvaṃ vicakarṣa mūrdhajam |",
    "957:39": "jajalpa vākyaṃ vigatārtham ākulaṃ",
    "957:40": "rurāva bhīteva ruroda gadgadam ||10||",
    "957:41": "niveśya bālaṃ śayane punaḥ punaḥ",
    "957:42": "samutkṣipantī yugapat karadvayam |",
    "957:43": "vikampya śīrṣaṃ ca yathā vicetanā",
    "957:44": "jughoṣa śaśvāsa papāta vivyathe ||11||",
    "957:45": "nipīḍyamānāpi bubhukṣayāniśaṃ",
    "957:46": "na bhojanaṃ bhoktum iyeṣa kiṃ cana |",
    "957:47": "tṛṣāturā nodakabindum apy asau",
    "957:48": "papau ca kāye 'py babhūva vepathuḥ ||12||",
    "957:49": "nihanyate dhīsmṛtiśaktidhīratā",
    "957:50": "śarīravarṇaṃ balam indriyeṣv api |",
    "957:51": "vinaśyate jīvam anukrameṇa ca",
    "957:52": "durantateyaṃ priyaviprayogatā ||13||",
    "957:53": "niṣadya bhūmyāṃ vinatārdhavigrahā",
    "957:54": "śiraś ca pāṇidvayam aṅkamastake |",
    "957:55": "niveśya kiṃ cit pariṇamya kaṃdharaṃ",
    "957:56": "mamajja cintājaladhāv apāśraye ||14||",
    "957:57": "yaśodharāyā avamānanakriyā",
    "957:58": "asahya siddhārthakumāra ekakaḥ |",
    "957:59": "nivāsam utsṛjya gato nu kānanam",
    "957:60": "iti pravādo 'pi bhaved aho mama ||15||",
    "957:61": "yad asti kāryaṃ triṣu mandireṣu tac",
    "957:62": "cakāra kārya- kṣamasevikā yathā |",
    "957:63": "gatau sthitau vā śayane ca vipriyaṃ",
    "957:64": "kadā canāhaṃ na cakāra kiṃ cana || 16||",
    "957:65": "vicintayantī sahasāgatāpadaṃ",
    "957:66": "pragamya devāyatanaṃ priyaṃ prati |",
    "957:67": "sugandhipuspair api dhūmadīpakair",
    "957:68": "apūpujad devagaṇaṃ sagauravam ||17||",
    "957:69": "bhujadvayaṃ mūrdhni niveśya śokinī",
    "957:70": "vilokya devapratimānanaśriyam |",
    "957:71": "praṇamya bhaktyā pariśuddhacetasā",
    "957:72": "yayāca devān iti viprayogataḥ ||18||",
    "957:73": "trilokasargasthitināśahetavaḥ",
    "957:74": "caturmukhaśrīpaticandraśekharāḥ |",
    "957:75": "mahānubhāvā jagadīśvarāḥ surāḥ",
    "957:76": "suduḥkhitāyai śaraṇaṃ bhavantu me ||19||",
    "957:77": "vidhāya yācñām iti devahastayor",
    "957:78": "upāyanīkṛtya babandha kārṣikau |",
    "957:79": "upāharan miṣṭanavāmbupāyasaṃ",
    "957:80": "sitāṃśukaṃ svarṇamayīṃ ca putrikām ||20||",
    "957:81": "pramodam āpādayituṃ sureśvarāṃś",
    "957:82": "cakāra ghaṇṭāninadaṃ ca bhūsurān |",
    "957:83": "ajījapad devagirā ca saṃstavān",
    "957:84": "nanāma bhūmāv asakṛt nipatya sā ||21||",
    "957:85": "pure vane saṃvasathe 'pi vallabho",
    "957:86": "vased dhi kasminn iti divyācakṣuṣā |",
    "957:87": "vilokya gehaṃ vinivartayantu taṃ",
    "957:88": "divaukasaḥ prārthayataiva sā punaḥ ||22||",
    "957:89": "nirīkṣya jihmānimiṣeṇa cakṣuṣā",
    "957:90": "nihatya gāḍhaṃ caraṇaṃ bhuvas tale |",
    "957:91": "muhur muhur daṃśitakomalādharā",
    "957:92": "prakarṣam utkṣipya vikampya tarjanīm ||23||",
    "957:93": "are-tvayāryasya gṛhābhiniṣkramaḥ",
    "957:94": "śruto na dṛṣṭaḥ vada kiṃ nirākulam |",
    "957:95": "iti pratīhārabhaṭaṃ ruṣoccakai",
    "957:96": "raveṇa papraccha sabāṣpalocanā ||24||",
    "957:97": "bhavān sa ārye nṛpavaṃśaśekharo",
    "957:98": "mayā na dṛṣṭaḥ pratihāram āgataḥ |",
    "957:99": "varāṅganābhiḥ saha kelikānane",
    "957:100": "gate niśīthe 'ramateti me śrutam ||25||",
    "957:101": "avītarāgo nanu rājanandano",
    "957:102": "vavāñcha tasmān nanu nūtanapriyām |",
    "957:103": "mithaḥ sa kāṃ cit pariṇīya nāṭikāṃ",
    "957:104": "bahir gato 'ddheti vitarkayāmy aham ||26||",
    "957:105": "purā hi mandhātv-abhidho mahāyaśāḥ",
    "957:106": "sa sārvabhaumo 'pi surāṅganāgaṇe |",
    "957:107": "kṛtānurāgo parivarjya mānuṣīṃ",
    "957:108": "śriyaṃ prapede nu divaukasāṃ puram ||27||",
    "957:109": "mano-'bhirāmaṃ surasundarīgaṇaṃ",
    "957:110": "vihāya vindhyā-vanatāpasāśrame |",
    "957:111": "agastipatnīṃ parirabhya tāpasīṃ",
    "957:112": "lalāsa rantuṃ niśi pākaśāsanaḥ ||28||",
    "957:113": "pratīta-laṅkāvijite 'grabhūpatir",
    "957:114": "daśānano daṇḍakakānanaṃ gataḥ |",
    "957:115": "vigṛhya sītāṃ janakātmajām api",
    "957:116": "nijapriyāvad vyadadhāt tadātmasāt ||29||",
    "957:117": "maheśvaraś cāpi purā tapaś carann",
    "957:118": "umāmahiṣyā saha kalikānane |",
    "957:119": "apāsya sātatyasamādhibhāvanaṃ",
    "957:120": "vyarīramac cājanayat sutau nanu ||30||",
    "957:121": "śucākulāṃ sāntvayituṃ vadhūttamām",
    "957:122": "iti pratīhāra uraḥ-sthale 'ñjalim |",
    "957:123": "vidhāya valgudhvaninānukampayā",
    "957:124": "natena mūrdhnā vacasā vyajijñapat ||31||",
    "957:125": "are-tvam etarhi bhavantam uttamaṃ",
    "957:126": "gṛhe bahir vopavane 'pi kutra cit |",
    "957:127": "aharmukhe kiṃ niśi vā dadarśitha",
    "957:128": "vyapṛcchad itthaṃ nijasevikāṃ ruṣā ||32||",
    "957:129": "nidhāya vāmetarajānumaṇḍalaṃ",
    "957:130": "kṣitau bhujau cāpi lalāṭamastake |",
    "957:131": "natārdhakāyaṃ nijagāda sevikā",
    "957:132": "śrutaṃ ca dṛṣṭaṃ na na vedmi kiṃ cana ||33||",
    "957:133": "ataḥ-paraṃ harmyam upeyuṣī satī",
    "957:134": "pramārjya nisyandajalaṃ vilocane |",
    "957:135": "are-kim āryo 'tra samāgato na vā",
    "957:136": "vyapṛcchad antaḥpurapālapaṇḍakam ||34||",
    "957:137": "praśasyarūpeṇa girā ca valgunā",
    "957:138": "śriyā 'pi dhṛtyā tava kakṣam āgatāḥ |",
    "957:139": "mahottame sarvajanena mānitā",
    "957:140": "bhavanti tasya tritayāḥ priyāṅganāḥ ||35||",
    "957:141": "mano-'bhirāmā bhavatī ca bhāratī",
    "957:142": "tathaiva lakṣmīr iti tāḥ priyāṅganāḥ |",
    "957:143": "sadaiva tābhī ramate kumārakaḥ",
    "957:144": "kadā cid anyatra mano 'sya no rajet ||36||",
    "957:145": "jugupsite satpuruṣair manasvibhiḥ",
    "957:146": "sadoṣakāme vimukho nu te patiḥ |",
    "957:147": "tato 'sya śuddhāntagatiḥ kadā cana",
    "957:148": "śrutā na dṛṣṭā na divā vā niśi ||37||",
    "957:149": "tapodhanānāṃ samatām upeyivān",
    "957:150": "ratiṃ na kuryāt sa bhavatraye kva cit |",
    "957:151": "amedhyagehena same 'varodhane",
    "957:152": "kathaṃ vidhatte ratim eṣa te patiḥ ||38||",
    "957:153": "asādhyarogāyatane sukhetare",
    "957:154": "bubhukṣayā nityanipīḍitodare |",
    "957:155": "atarpaṇīye vividhānnapānakaiḥ",
    "957:156": "spṛhāṃ na dehe prakaroti paṇḍitaḥ ||39||",
    "957:157": "vikīrṇagharmodakavipruṣi tvaci",
    "957:158": "vicitravarṇaṃ śamalena saṃskṛte |",
    "957:159": "śarīra ālokya jano vinaśyate",
    "957:160": "pataṅgavad dīpaśikhojjvalaprabhām ||40||",
    "957:161": "tato nṛpāntaḥ-purapālakodite",
    "957:162": "kṛtāvadhānā vacane yaśodharā |",
    "957:163": "divaukasāṃ nandanakānanopamaṃ",
    "957:164": "jagāma rājopavanaṃ calātmanā ||41||",
    "957:165": "athābhirāmopavanasya rakṣakaḥ",
    "957:166": "puraḥ pragamyorasi baddhapāṇinā |",
    "957:167": "kimartham ārye 'tra samāgatis tava",
    "957:168": "bhavāmi jijñāsur iti nyavedayat ||42||",
    "957:169": "sakhe mamāryo rahasāruṇodaye",
    "957:170": "samāgato vātra na kiṃ samāgataḥ |",
    "957:171": "kim atra dṛṣṭaḥ sa na vā śrutas tvayā",
    "957:172": "vicintya samyag vada māṃ yathātatham ||43||",
    "957:173": "gataspṛhaḥ pañcasu kāmavastuṣu",
    "957:174": "sa āryaputro vijitendriyo bhavet |",
    "957:175": "tato 'bhirāmopavanaṃ samāgamo",
    "957:176": "na dṛṣṭa ārye na hi vā śruto mayā ||44||",
    "957:177": "vidhitsamāno 'bhyudayaṃ jagattraye",
    "957:178": "divaukasānām adhigamya yācanam |",
    "957:179": "divo 'vatīrṇo nanu puṇyatejasā",
    "957:180": "manuṣyajanmany ajaniṣṭa sa prabhuḥ ||45||",
    "957:181": "mahāmahe saty asitarṣir īyivān",
    "957:182": "divaṃ kim ity asya vimṛśya kāraṇam |",
    "957:183": "svamitra-śuddhodanabhūpateḥ suto",
    "957:184": "'janīti harṣāt tam avekṣituṃ yayau ||46||",
    "957:185": "tato 'sitarṣir nṛpasaudham āgataḥ",
    "957:186": "kumārakaṃ vīkṣya sapuṇyasampadam |",
    "957:187": "atīndriyajñānamayena cakṣuṣā",
    "957:188": "parīkṣamāṇo 'sya śarīralakṣaṇam ||47||",
    "957:189": "jagāda vākyaṃ śiśur eṣa puṇyavān",
    "957:190": "bhaved dhi buddho hata-mārabandhanaḥ |",
    "957:191": "pratārayet sarvanarāmarāsurān",
    "957:192": "apārasaṃsāramahārṇavād iti ||48||",
    "957:193": "dvijeṣu pañcasv atha dehalakṣaṇaṃ",
    "957:194": "parīkṣya kauṇḍaṇyabudho 'bravīd iti |",
    "957:195": "vinaśya tṛṣṇādimalāny ayaṃ śiśur",
    "957:196": "anuttaraṃ buddhapadaṃ gamiṣyati ||49||",
    "957:197": "tadā prasūtakṣaṇa eva lumbinī-",
    "957:198": "vane sa saptāmbujamūrdhny abhivrajan |",
    "957:199": "abhītanādaṃ nyanadaj jagattraye",
    "957:200": "bhaveyam agras tv iti siṃhapotavat ||50||",
    "957:201": "bhramaddvirephaśrutiramyanisvanaḥ",
    "957:202": "sugandhinaḥ puṣpaparāgarāśinā |",
    "957:203": "taraṃgiṇīśīkaramiśramāruto",
    "957:204": "vavau samantād vipine śanaiḥ tadā ||51||",
    "957:205": "mahātmanas tasya parārdhyajanmani",
    "957:206": "vasuṃdharāyā nidhayaḥ samudgatāḥ |",
    "957:207": "dharāṅganā tarhy atimātramoditā",
    "957:208": "savismayāṃ siddhim adarśayad bhuvi ||52||",
    "957:209": "tataḥ paraṃ lumbinikānanād gṛhaṃ",
    "957:210": "vicitrajāmbūnadabimbasaṃnibham |",
    "957:211": "kumārakaṃ tau pitarau savatsalau",
    "957:212": "sabandhuvargaṃ parivārya ninyatuḥ ||53||",
    "957:213": "gurupradiṣṭaṃ vidhivad gurupriyaḥ",
    "957:214": "samastavidyāsamayaṃ ca darśanam |",
    "957:215": "bhave bhave saṃcitapuṇyatejasā",
    "957:216": "samadhyagīṣṭāciram eṣa buddhimā ||54||",
    "957:217": "śrutena dhṛtyā navayauvanaśriyam",
    "957:218": "upeyuṣo 'syārya-sutasya janmanaḥ |",
    "957:219": "saha tvayā ṣoḍaśame hi hāyane",
    "957:220": "vivāhadīkṣāṃ vidhivac cakāra nu ||55||"
}