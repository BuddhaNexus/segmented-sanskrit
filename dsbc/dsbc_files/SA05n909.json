{
  "SA05n909:0": "vajrayoginyāḥ piṇḍārthastutiḥ",
  "SA05n909:1": "siddhācārya-virūpādaviaracitā",
  "SA05n909:2": "om namo vajrayoginyai |",
  "SA05n909:3": "om namo buddhadharmasaṃghebhyaḥ |",
  "SA05n909:4": "om namo gurubuddhabodhisattvebhyaḥ |",
  "SA05n909:5": "om namo locanādidaśavajravilāsinībhyaḥ |",
  "SA05n909:6": "namo yamāntakādidaśakroḍha(dha) vīrebhyaḥ |",
  "SA05n909:7": "vārāhī śauṇḍinī caiva caṇḍālī ḍombinī tathā |",
  "SA05n909:8": "naṭanī rajakī brāhmī kapālinī ca sāsa(śāśva) tā || 1 ||",
  "SA05n909:9": "amṛtā'mṛtakuṇḍalī ca jñānajyotiḥprakāśikā |",
  "SA05n909:10": "sarvāśāvīradevīnāmiyamekā mahāsukhā || 2 ||",
  "SA05n909:11": "śūnyatā gīyate cāsau parāśaktiḥ parātparā |",
  "SA05n909:12": "amṛtordhvamanā divyā upāyā nityavāhinī || 3 ||",
  "SA05n909:13": "khecarī bhūcarī caiva pātālavāsinī tathā |",
  "SA05n909:14": "pravi(ti)ṣṭhāpūraṇī nityaṃ trailokyakṣobhatī(bhiṇī) tathā || 4 ||",
  "SA05n909:15": "bindunādakalā devī candrasūryātmikā hi sā",
  "SA05n909:16": "(nityā) nairmāṇikī caiva saṃbhāgī ca mahāsukhā || 5 ||",
  "SA05n909:17": "bindunādakalātītā prajñāpāramitā matā |",
  "SA05n909:18": "sarvabhāvasvabhāvā hi sarvabhāvavivarjitā || 6 ||",
  "SA05n909:19": "pralayotpattihīnā ca pralayotpattikāriṇī |",
  "SA05n909:20": "śāśvatatvāt sthitā proktā śāśvatena ca varjitā || 7 ||",
  "SA05n909:21": "gambhīrā''liṅgitodārā mahārthā svadhimuktikā |",
  "SA05n909:22": "śūnyatātrayahīnā ca prabhāsvarasvarūpiṇī || 8 ||",
  "SA05n909:23": "ekārākṣararūpā ca vaṃkārākṣarasaṃgatā |",
  "SA05n909:24": "vicitrādikṣaṇairyuktā caturānandarūpiṇī || 9 ||",
  "SA05n909:25": "bāhyamaṇḍalacakre'pi sphurantī ca trikāyataḥ |",
  "SA05n909:26": "kāyavākacittabhāveṣu kāyavākacittabhūṣaṇī || 10 ||",
  "SA05n909:27": "atītya kāyavākacittaiḥ samatvena ca madhyagā |",
  "SA05n909:28": "nairātmyarūpiṇī devī tathatāyāṃ pratiṣṭhitā || 11 ||",
  "SA05n909:29": "kamalakuliśākrāntaśūnyatātrayarūpiṇī |",
  "SA05n909:30": "lalanārasanāyogādavadhūtī mahāsukhā || 12 ||",
  "SA05n909:31": "saṃsāratāraṇī caiṣāṃ tathā tāsāṃ pratītyajā |",
  "SA05n909:32": "yāṃ labdhvā yoginīṃ muktā bhavasaṃsārabandhanāt || 13 ||",
  "SA05n909:33": "ityeṣā ṛddhidā proktā siddhidā caiva yoginī |",
  "SA05n909:34": "mokṣadvāraparā caiva satatābhyāsakāriṇām || 14 ||",
  "SA05n909:35": "vajravat kurute dehaṃ rasasiddhiṃ dadāti ca |",
  "SA05n909:36": "gurupādaprasādena labdheyaṃ vajrayoginī || 15 ||",
  "SA05n909:37": "ya(e) tasyāḥ pāṭhamātreṇa puṇyasaṃbhāramādarāt |",
  "SA05n909:38": "prāpnoti satataṃ yogī jñānasaṃbhārasaṃbhṛtaḥ || 16 ||",
  "SA05n909:39": "śrīguhyasamayatantre piṇḍārthāḥ ṣoḍaśaślokāstrikāyavajra-",
  "SA05n909:40": "yoginyāḥ samāptāḥ |",
  "SA05n909:41": "kṛtiriyaṃ siddhācāryaśrīvirupādānāmiti |"
}