{
    "1342:0": "tṛtīyo'dhikāraḥ",
    "1342:1": "gotraprabhedasaṃgrahaślokaḥ",
    "1342:2": "sattvāgratvaṃ svabhāvaśca liṅgaṃ gotraprabhedatā",
    "1342:3": "ādīnavo'nuśaṃsaśca dvidhaupamyaṃ caturvidhā||1||",
    "1342:4": "dhātūnāmadhimukteśca pratipatteśca bhedataḥ|",
    "1342:5": "phalabhedopalabdheśca gotrāstitvaṃ nirūpyate||2||",
    "1342:6": "udagratve'tha sarvatve mahārthatve'kṣayāya ca|",
    "1342:7": "śubhasya tatrimittatvāt gotrāgratvaṃ vidhīyate|| 3||",
    "1342:8": "prakṛtyā paripuṣṭaṃ ca āśrayaścāśritaṃ ca tat|",
    "1342:9": "sadasaccaiva vijñeyaṃ guṇottāraṇatārthataḥ||4||",
    "1342:10": "kāruṇyamadhimuktiśca kṣāntiścādiprayogataḥ|",
    "1342:11": "samācāraḥ subhasyāpi gotreliṅgaṃ nirupyate||5||",
    "1342:12": "niyatāniyataṃ gotramahāryaṃ hāryameva ca|",
    "1342:13": "pratyairgotrabhedo 'yaṃ samāsena caturvidhaḥ||6||",
    "1342:14": "kleśābhyāsaḥ kumitratvaṃ vidhātaḥ paratantratā|",
    "1342:15": "gotrasyādīnavo jñeyaḥ samāsena caturvidhaḥ||7||",
    "1342:16": "cirādapāyagamanamāśumokṣaśca tatra ca|",
    "1342:17": "tanuduḥkhopasaṃvittiḥ sodvegā sattvapācanā||8||",
    "1342:18": "suvarṇagotravat jñeyamameyaśubhatāśrayaḥ|",
    "1342:19": "jñānanirmalatāyogaprabhāvāṇāṃ ca niśrayaḥ||9||",
    "1342:20": "suratnagotravatjñeyaṃ mahābodhinimittataḥ|",
    "1342:21": "mahājñānasamādhyāryamahāsattvārthaniśrayāt||10||",
    "1342:22": "aikāntiko duścarite 'sti kaścit",
    "1342:23": "kaścit samudghātitaśukladharmā|",
    "1342:24": "amokṣabhāgīyaśubho'sti kaścin",
    "1342:25": "nihīnaśuklo'styapi hetuhīnaḥ||11||",
    "1342:26": "gāmbhīryaudāryavāde parahitakaraṇāyodite dīrghadharme",
    "1342:27": "ajñātvaivādhimuktirbhavati suvipulā saṃprapattikṣamā ca|",
    "1342:28": "saṃpattiścāvasāne dvayagataparamā yadbhavatyeva teṣāṃ",
    "1342:29": "tajjñeyaṃ bodhisattvaprakṛtiguṇavatastatprapuṣṭācca gotrāt||12||",
    "1342:30": "suvipulaguṇabodhivṛkṣavṛddhyai dhanasukhaduḥkhaśamopalabdhaye ca|",
    "1342:31": "svaparahitasukhakriyā phalatvād bhavati samudagra[samūlamudagra]gotrametat||13||",
    "1342:32": "|| mahāyānasūtrālaṃkāre gotrādhikārastṛtīyaḥ||"
}