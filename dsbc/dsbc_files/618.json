{
    "618:0": "27",
    "618:1": "235. evaṃ carantu vidu nā pṛthudevasaṃghāḥ",
    "618:2": "kṛtaañjalīpuṭa praṇamya namasyayanti|",
    "618:3": "buddhā pi yāvata daśaddiśi lokadhātau",
    "618:4": "guṇavarṇamālaparikīrtana kurvayanti||1||",
    "618:5": "236. yāvanti gaṅganadivālisame hi kṣetre",
    "618:6": "sattvā ta sarvi parikalpa bhaveyu mārāḥ|",
    "618:7": "ekaika roma puna tāntaka nirmiṇeyyā",
    "618:8": "sarve na śakya karaṇe vidu antarāyam||2||",
    "618:9": "237. catukāraṇehi balavāṃ vidu bodhisattvo",
    "618:10": "bhavate dugharṣu catumāraasaṃprakampyo|",
    "618:11": "śūnyāvihāri bhavate na ca sattvatyāgī",
    "618:12": "yathavādi sattvakaruṇānugatāvasthānaḥ||3||",
    "618:13": "238. yo bodhisattva adhimucyati bhāṣyamāṇā-",
    "618:14": "mima prajñapāramita māta tathāgatānām|",
    "618:15": "pratipattiyā ca abhiyujyati āśayena",
    "618:16": "sarvajñatāya abhiprasthitu veditavyo||4||",
    "618:17": "239. na ca dharmadhātutathatāya upaiti sthānaṃ",
    "618:18": "bhavatī athānasthita so laghu antarīkṣe|",
    "618:19": "vidyādharo va abhilambhu vanābhiprāyā",
    "618:20": "khagu kālahīna druma mantrabalādhiṣṭhāno||5||",
    "618:21": "240. evaṃ carantu vidu paṇḍitu bodhisattvo",
    "618:22": "na ca budhyakaṃ labhati nāpi ca buddhadharmān|",
    "618:23": "na ca deśikaṃ na pi ca paśyaka dharmatāyāṃ",
    "618:24": "śāntaiṣiṇāmayu vihāra guṇe ratānām||6||",
    "618:25": "241. yāvanta śrāvakavihāra sapratyayānāṃ",
    "618:26": "śāntā samādhipraśame sukhasaṃprayuktā|",
    "618:27": "arhanvimokṣa sthapayitva tathāgatānāṃ",
    "618:28": "sarveṣu agra ayu vihāru niruttaraśca||7||",
    "618:29": "242. ākāśi pakṣi viharāti na co patāti",
    "618:30": "dakamadhyi matsya viharāti na co marāti|",
    "618:31": "emeva dhyānabalapāragu bodhisattvo",
    "618:32": "śūnyāvihāri na ca nirvṛti prāpuṇāti||8||",
    "618:33": "243. yo sarvasattvaguṇaagratu gantukāmo",
    "618:34": "agraṃ spṛśeya paramādbhuta buddhajñānam|",
    "618:35": "agraṃ dadeya vara uttamadharmadāna-",
    "618:36": "mimu agru sevatu vihāru hitaṃkarāṇām||9||",
    "618:37": "bhagavatyāṃ ratnaguṇasaṃcayagāthāyāṃ sāraparivarto nāma saptaviṃśatimaḥ||"
}