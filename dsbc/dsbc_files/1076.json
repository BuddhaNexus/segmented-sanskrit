{
    "1076:0": "pratītyasamutpādahṛdayakārikā",
    "1076:1": "nāgārjunakṛtā",
    "1076:2": "dvādaśa ye'ṅgaviśeṣā muninoddiṣṭāḥ pratītyasambhūtāḥ|",
    "1076:3": "te kleśakarmaduḥkheṣu saṅgṛhītāstriṣu yathāvat||1||",
    "1076:4": "ādyāṣṭamanavamāḥ syuḥ kleśāḥ karma dvitīyadaśamau ca|",
    "1076:5": "śeṣāḥ sapta ca duḥkhaṃ trisaṅgrahā dvādaśa tu dharmāḥ||2||",
    "1076:6": "tribhyo bhavati dvandvaṃ dvandvātprabhavanti sapta saptabhyaḥ|",
    "1076:7": "traya udbhavanti bhūyastadeva [tu] bhramati bhavacakram||3||",
    "1076:8": "hetuphalañca [hi]sarvaṃ jagadanyo nāsti kaścidiha sattvaḥ|",
    "1076:9": "śūnyebhya eva śūnyā dharmāḥ prabhavanti dharmebhyaḥ||4||",
    "1076:10": "svādhyāyadīpamudrādarpaṇaghoṣa'rkakāntabījāmlaiḥ|",
    "1076:11": "skandhapratisandhirasaṅkramaśca vidvadbhiravadhāryau||5||",
    "1076:12": "ya ucchedaṃ prakalpayatyatisūkṣme'pi vastuni|",
    "1076:13": "pratītyasambhavasyārthamavijñaḥ sa na paśyati||6||",
    "1076:14": "nāpaneyamataḥ kiñcit prakṣepyaṃ nāpi kiñcana|",
    "1076:15": "draṣṭavyaṃ bhūtato bhūtaṃ bhūtadarśī vimucyate||7||",
    "1076:16": "pratītyasamutpādahṛdayakārikā",
    "1076:17": "ācārya nāgārjunakṛtā",
    "1076:18": "samāptā|"
}