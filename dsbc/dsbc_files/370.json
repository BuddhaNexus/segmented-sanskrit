{
    "370:0": "7. adhomukha sattvoddhāraṇa prakaraṇam",
    "370:1": "athāsau bhagavāṃcchāstā śrīghanastrijagadguruḥ|",
    "370:2": "viṣkambhinaṃ mahāsattvaṃ saṃpaśyaṃścaivamabravīt||",
    "370:3": "bhūyo'pi kulaputrāsya lokeśasya mahadguṇam|",
    "370:4": "śrutaṃ mayā tathā vakṣye tacchṛṇuta samādarāt||",
    "370:5": "tadyathābhut purā śāstā tathāgato munīśvaraḥ|",
    "370:6": "sarvajño'rhanmahābhijño dharmarājo vināyakaḥ||",
    "370:7": "sarvadharmādhipo nāthaḥ sarvavidyādhipeśvaraḥ|",
    "370:8": "viśvabhūrnām saṃbuddho bhagavān sugato jinaḥ||",
    "370:9": "tadāhaṃ kulaputrāsaṃ kṣāntivādīti viśrutaḥ|",
    "370:10": "maharṣistāpaso dhīmān saṃyamī vijitendriyaḥ||",
    "370:11": "giriguhāṃ samāśritya saṃbodhidharmasādhakaḥ|",
    "370:12": "vyaharan sattvahitaṃ kṛtvā caturbrahmavihārikaḥ||",
    "370:13": "tadāpyasya jagacchāsturlokeśasya mahattaram|",
    "370:14": "guṇaprabhāvamākhyātaṃ viśvabhuvā śrutaṃ mayā||",
    "370:15": "74",
    "370:16": "tadyathāsau jagacchāstā viśvarbhūbhagavān jinaḥ|",
    "370:17": "tadvanopāśrame ramye vijahāra sasāṃghikaḥ||",
    "370:18": "tadā sa bhagavāṃstatra sarvalokasabhāśritaḥ|",
    "370:19": "saddharmaṃ samupādiśya sattvān bodhau vyanodayan||",
    "370:20": "yadaikasamaye tatra bhagavān sa munīśvaraḥ|",
    "370:21": "āryadharmamupādeṣṭuṃ sabhāsane samāśrayat||",
    "370:22": "tadā tatra mahān raśmiravabhāsya samantataḥ|",
    "370:23": "sarvatra maṃgalaṃ kṛtvāhlādayantī samāsarat||",
    "370:24": "tadraśmisaṃparispṛṣṭāḥ sarvasattvāḥ sukhānvitāḥ|",
    "370:25": "tadadbhutaṃ samālokya vismayaṃ samupāyayuḥ||",
    "370:26": "tadā gaganagaṃjākhyo bodhisattvo mahāmatiḥ|",
    "370:27": "sarvāṃstān vismayāpannān lokān paśyan samutthitaḥ||",
    "370:28": "udvahannuttarāsaṃgaṃ sāṃjaliḥ purato'grataḥ|",
    "370:29": "viśvabhuvaṃ munīndraṃ taṃ natvaivaṃ paryapṛcchata||",
    "370:30": "bhagavan puṇyaprabhākāntiḥ kasya heyaṃ samāgatā|",
    "370:31": "yayā spṛṣṭā ime lokā mahatsukhasamanvitāḥ||",
    "370:32": "vismitāstatsamālokya bhagavantaṃ munīśvaram|",
    "370:33": "taddhetuṃ śrotumicchantaḥ sarve tasthuḥ samāhitāḥ||",
    "370:34": "tedaṣāṃ hadayāntaḥsthaṃ mahadadbhutakautukam|",
    "370:35": "vinoditumimaṃ hetuṃ kasyeti tadupādiśa||",
    "370:36": "iti tenoditaṃ śrutvā viśvabhūḥ sa munīśvaraḥ|",
    "370:37": "vilokya taṃ mahāsattvaṃ gaganagaṃjamabravīt||",
    "370:38": "śṛṇu tvaṃ kulaputrātra yadidaṃ kāntirāgatā|",
    "370:39": "tadahaṃ saṃpravakṣyāmi śrutvedamanumodata||",
    "370:40": "yā kāṃcanamayīḥ bhūmirjambudvipe'tra vidyate|",
    "370:41": "tasyāmadhomukhāḥ satvā nivasantyapramoyikāḥ||",
    "370:42": "tān sarvān pāpino duṣṭān paśyan sa sugatātmajaḥ|",
    "370:43": "lokeśvaraḥ samaddharttuṃ sukhāvatyā ihāgataḥ||",
    "370:44": "75",
    "370:45": "teṣāṃ pāpaviśodhārthaṃ puṇyaraśmiṃ samutsṛjan|",
    "370:46": "bhāsayan sa jagallokāṃstatra yāti kṛpānidhiḥ||",
    "370:47": "tatprabhāparisaṃspṛṣṭāḥ sarve te satsukhānvitāḥ|",
    "370:48": "kimetaditi saṃvikṣya tiṣṭhanti vismitāśayāḥ||",
    "370:49": "tadā tatra sa lokeśa ṛṣirupeṇa bhāsayan|",
    "370:50": "sarvānadhomukhān sattvānupaiti tān vilokayan|",
    "370:51": "tamṛṣiṃ saṃprabhāsantaṃ samāyātaṃ vilokya te||",
    "370:52": "sarve'pyadhomukhāḥ sattvāḥ samupāyānti saṃmukham|",
    "370:53": "tatra sarve'pi te sattvāḥ praṇatvā taṃ muniṃ mudā||",
    "370:54": "śraddhāsane pratiṣṭhāpya prārthayantyevamādarāt|",
    "370:55": "maharṣe yadihāyāsi tadasmadbhāgyayogataḥ||",
    "370:56": "tadbhavān kṛpayāsmākaṃ daivamākhyātumarhati|",
    "370:57": "kiṃ karma pātakaṃ ghoramasmābhiḥ prakṛtaṃ purā||",
    "370:58": "yenāsmo'dhomukhā sarve vayaṃ jātā ihedṛśāḥ||",
    "370:59": "iti taiḥ prārthitaṃ śrutvā sa maharṣirvilokya tān|",
    "370:60": "sarvānadhomukhān sattvān samādiśati bodhayan||",
    "370:61": "śṛṇuśvaṃ yatpurā karma yuṣmābhiḥ prakṛtaṃ yathā|",
    "370:62": "tatsamupadiśāmyatra śrutvā tatparibudhyatām||",
    "370:63": "yattrirantaṃ pratikṣipya maderṣyāmānagarvitāḥ|",
    "370:64": "adṛśyamiti bhāṣanto carannadhomukhāḥ purā||",
    "370:65": "tenaitaddaivayogena yūyaṃ sarve'pyadhomukhāḥ|",
    "370:66": "duḥkhāni vividhānyatra bhuktvā vasatha sāmpratam||",
    "370:67": "tadatra śraddhayā yūyaṃ triratnaśaraṇaṃ gatāḥ|",
    "370:68": "dhyātvā smṛtvā samuccārya nāmāpi bhajatādarāt||",
    "370:69": "poṣadhaṃ ca vrataṃ dhṛtvā caturbrahmavihāriṇaḥ|",
    "370:70": "svaparātmahitaṃ kṛtvā saṃcaradhvaṃ sadā śubhe||",
    "370:71": "tataḥ saṃbodhicittena dhṛtvā bodhivrataṃ sadā|",
    "370:72": "triratnabhajanotsāhaiḥ saṃcaradhvaṃ jagaddhite||",
    "370:73": "76",
    "370:74": "tato yūyaṃ vikalmaṣāḥ pariśuddhatrimaṇḍalāḥ|",
    "370:75": "niḥkleśā bodhimāsādya nirvṛtisukhamāpsyatha||",
    "370:76": "iti tena samādiṣṭaṃ śrutvā sarve'pi te mudā|",
    "370:77": "tasya pādau punarnatvā puraḥsthitvaivamabruvan||",
    "370:78": "nātho'si tvaṃ jagalloke saddharmasukhasaṃbharaḥ|",
    "370:79": "āśvāsaya tadasmākamandhānāṃ pāpacāriṇām||",
    "370:80": "tamo'bhibhūtadṛṣṭīnāṃ praṇaṣṭapathacāriṇam|",
    "370:81": "anāthānāmamitrāṇāṃ dīnānāṃ mūḍhacetasām||",
    "370:82": "trāṇaśaraṇyaśūnyānāṃ mandānāṃ duḥkhabhāginām|",
    "370:83": "dharmadīpaṃ samujjvālya darśaya nirvṛteḥ pathaḥ||",
    "370:84": "datvā satsukhasampattirnnātho bhava śubhārthabhṛt|",
    "370:85": "datvā puṇyārjanopāyaṃ sanmitro bhava sanmatiḥ||",
    "370:86": "durgatitaraṇopāyaṃ pradatvā bhavasadgatiḥ|",
    "370:87": "sadgatigamanopāyaṃ datvā śāstvā gururbhava||",
    "370:88": "nirvārya pāpasaṃgebhyastrātā kleśāpaho bhava|",
    "370:89": "durvṛttikleśasaṃtāpaṃ hatvā bhavaśaraṇyakaḥ||",
    "370:90": "saddharmasādhanotsāhaṃ datvā bhava vināyakaḥ|",
    "370:91": "sadguṇasukhasaṃpattīrdatvā bhava suhatprabhuḥ||",
    "370:92": "saddharmaṃ samupādiśya cārayāsmān susaṃvare|",
    "370:93": "vimuktisādhanopāyaṃ datvā preṣaya nirvṛtim||",
    "370:94": "dhanyāste sukhitā yete satataṃ śaraṇe sthitvā|",
    "370:95": "smṛtvā nāma samuccārya dhyātvā bhajanti sarvadā||",
    "370:96": "īdṛgduḥkhaṃ na te kvāpi yāsyanti bhavacāraṇe|",
    "370:97": "yādṛgvayamidaṃ duḥkhamanubhāvāmahe sadā||",
    "370:98": "te sadbhāgyā mahāsattvā ye sadā te upasthitāḥ|",
    "370:99": "ādimadhyāntakalyāṇaṃ dharmaṃ śrutvā caranti vai||",
    "370:100": "vayamapi tathā sarve sadā te śaraṇe sthitāḥ|",
    "370:101": "dharmaṃ śrutvā sukalyāṇamicchāmaścarituṃ vratam||",
    "370:102": "77",
    "370:103": "tatprasīda maharṣe tvamasmākaṃ sadgururbhava|",
    "370:104": "saddharmaṃ samupādiśya cārayāsmān susaṃvare||",
    "370:105": "iti taiḥ prārthitaṃ śrutvā sa maharṣiḥ prasāditān|",
    "370:106": "tān sarvāna samupāmantrya samālokyaivamādiśat||",
    "370:107": "śṛṇudhvaṃ sādaraṃ yūyaṃ sadā bhagraṃ yadīcchatha|",
    "370:108": "hitārthaṃ vaḥ pravakṣyāmi saddharmabodhisādhanam||",
    "370:109": "ityādiśya sa kāraṇḍavyūhasūtraṃ subhāṣitam|",
    "370:110": "uccārya śrāvayan bodhicaryāyāṃ yojayatyapi||",
    "370:111": "tataste pureṣāḥ sarve saddharmasādhanodyatāḥ|",
    "370:112": "triratnabhajanaṃ kṛtvā saṃcarante susaṃvare||",
    "370:113": "tataste vimalātmānaḥ pariśuddhatrimaṇḍalāḥ|",
    "370:114": "bodhicaryāvrataṃ dhṝtvā saṃcarante jagaddhite||",
    "370:115": "sarve'pi te mahāsattvā bodhisattvā maharddhikāḥ|",
    "370:116": "paramasukhābhartāro bhavantyapyanivartinaḥ||",
    "370:117": "evaṃ sa trijagannātha ṛṣirupeṇa bodhayan|",
    "370:118": "sarvānstāna bodhicaryāyāṃ niyujya cārayatyapi||",
    "370:119": "evaṃ tān bodhimārge'sau maharṣiḥ sarvānniyujya ca|",
    "370:120": "tato'ntarhita ākāśe yāti vahnirivojjvalan||",
    "370:121": "tamākāśagataṃ dṛṣṭvā sarve te'pyativismitāḥ|",
    "370:122": "praṇatvā cānuśaṃsataḥ saṃcarante samādarāt||",
    "370:123": "tasya lokeśvarasyeyaṃ puṇyakāntiḥ śubhā prabhoḥ|",
    "370:124": "avabhāsya jagallokamihāpi saṃprasāritā||",
    "370:125": "evaṃ sa trijagannātho lokeśvaro jinātmajaḥ|",
    "370:126": "sarvasattvahitaṃ kṛtvā pracaranti samantataḥ||",
    "370:127": "tena tasya mahatpuṇyaskandhaṃ bahusamuttamam|",
    "370:128": "aprameyamasaṃkhyeyaṃ ityādiṣṭaṃ munīśvaraiḥ||",
    "370:129": "evaṃ vijñāya sarve'sya lokeśasya sadādarāt|",
    "370:130": "smṝtvā dhyātvā samuccārya nāmāpi bhaktumarhatha||",
    "370:131": "78",
    "370:132": "ye tasya śaraṇaṃ gatvā smṛtvā dhyātvāpi sarvadā|",
    "370:133": "nāmāpi ca samuccārya bhajanti śraddhayā mudā||",
    "370:134": "durgatiṃ te na gacchanti saṃjātāssadgatau sadā|",
    "370:135": "dharmaśrīguṇasaṃpattirbhuktvā yānti sukhāvatīm||",
    "370:136": "ityādiṣṭaṃ munīndreṇa viśvabhuvā niśamya te|",
    "370:137": "sarve sabhāśritā lokāḥ prābhyanandan prabodhitāḥ||",
    "370:138": "ityevaṃ lokanāthasya puṇyaprabhāvamuttamam|",
    "370:139": "viśvabhuvā munīndreṇa samādiṣṭaṃ mayā śrutam||",
    "370:140": "evaṃ sukṛtamāhātmyaṃ lokeśvarasya sadguroḥ|",
    "370:141": "vijñāya śaraṇaṃ gatvā bhajantu bodhivāṃchina||",
    "370:142": "ye tasya śaraṇaṃ gatvā bhajanti śraddhayā sadā|",
    "370:143": "saddharmaguṇasaukhyaṃ bhuktvā yāyuḥ sukhāvatīm||",
    "370:144": "tatra gatvāmitābhasya saddharmāmṛtamuttamam||",
    "370:145": "pītvā saṃbodhimāsādya prānte yāyuḥ sunirvṛtim||",
    "370:146": "ityādiṣṭaṃ munīndreṇa śrīghanena niśamya te|",
    "370:147": "sarve sabhāśritā lokāḥ prābhyanandan prabodhitāḥ||",
    "370:148": "|| ityadhomukhasattvoddharaprakaraṇam||"
}