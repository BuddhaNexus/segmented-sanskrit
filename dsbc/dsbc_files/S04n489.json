{
  "S04n489:0": "buddhānusmṛtiparivartaḥ |",
  "S04n489:1": "atha khalu candraprabhaḥ kumārabhūto bhagavantametadavocat-samādhiḥ samādhiriti bhagavannucyate |",
  "S04n489:2": "katamasyaitaddharmasyādhivacanaṃ samādhiriti ?",
  "S04n489:3": "evamukte bhagavāṃścandraprabhaṃ kumārabhūtametadavocat-samādhiḥ samādhiriti kumāra ucyate yaduta cittanidhyāptiḥ |",
  "S04n489:4": "anupapattiḥ |",
  "S04n489:5": "apratisaṃdhiḥ |",
  "S04n489:6": "pratisaṃdhijñānam |",
  "S04n489:7": "apahṛtabhāratā |",
  "S04n489:8": "tathāgatajñānam |",
  "S04n489:9": "buddhavṛṣabhitā |",
  "S04n489:10": "rāgacikitsā |",
  "S04n489:11": "doṣavyupaśamaḥ |",
  "S04n489:12": "mohasya prahāṇam |",
  "S04n489:13": "yuktayogitā |",
  "S04n489:14": "ayuktavivarjanatā |",
  "S04n489:15": "akuśaladharmacchandaḥ |",
  "S04n489:16": "saṃsārānmokṣakāmatā |",
  "S04n489:17": "adhyāśayapratipattiḥ |",
  "S04n489:18": "jāgarikāyā āsevanam |",
  "S04n489:19": "prahāṇasyānutsargaḥ |",
  "S04n489:20": "ārakṣā śukladharmāṇām |",
  "S04n489:21": "upapattiṣvaviśvāsaḥ |",
  "S04n489:22": "anabhisaṃskāraḥ |",
  "S04n489:23": "karmaṇāmādhyātmikānāmāyatanānāmamanasikāraḥ |",
  "S04n489:24": "bāhyānāmāyatanānāmasamudācāraḥ |",
  "S04n489:25": "ātmano'nutkarṣaṇam |",
  "S04n489:26": "pareṣāmapaṃsanatā |",
  "S04n489:27": "kuśaleṣvanadhyavasānam |",
  "S04n489:28": "pṛthagjaneṣvaviśvāsaḥ |",
  "S04n489:29": "śīlasya niṣyandaḥ |",
  "S04n489:30": "durāsadatā |",
  "S04n489:31": "mahaujaskatā |",
  "S04n489:32": "ātmajñānam |",
  "S04n489:33": "acapalatā |",
  "S04n489:34": "īryāpathasaṃpadavasthānam |",
  "S04n489:35": "avyāpādaḥ |",
  "S04n489:36": "apāruṣyam |",
  "S04n489:37": "pareṣvanutpīḍā |",
  "S04n489:38": "mitrāṇāmanurakṣaṇā |",
  "S04n489:39": "guhyamantrāṇāmārakṣaṇā |",
  "S04n489:40": "avihiṃsā |",
  "S04n489:41": "śīlavatāmanutpīḍanā |",
  "S04n489:42": "ślakṣṇavacanatā |",
  "S04n489:43": "sarvatraidhātuke aniḥśritatā |",
  "S04n489:44": "sarvadharmeṣu śūnyatā |",
  "S04n489:45": "ānulomikī kṣāntiḥ |",
  "S04n489:46": "sarvajñajñāne tīvracchandatā samādhiḥ samādhiriti kumāra ucyate |",
  "S04n489:47": "yā eveṣvevaṃrūpeṣu dharmeṣu pratipattirapratipattiḥ,",
  "S04n489:48": "ayaṃ sa kumāra ucyate samādhiriti ||",
  "S04n489:49": "atha khalu bhagavāṃstasyāṃ velāyāmimā gāthā abhāṣata-",
  "S04n489:50": "apāvṛtaṃ me amṛtasya dvāram",
  "S04n489:51": "ācakṣito dharmasvabhāvu yādṛśaḥ |",
  "S04n489:52": "nidarśitā me upapatti yādṛśī",
  "S04n489:53": "prakāśitā nirvṛti sānuśaṃsā || 1 ||",
  "S04n489:54": "vivarjanīyāḥ sada pāpamitrāḥ",
  "S04n489:55": "kalyāṇamitrāśca niṣevitavyāḥ |",
  "S04n489:56": "vaneṣu vastavya gaṇān jahitvā",
  "S04n489:57": "maitraṃ ca cittaṃ sada bhāvanīyam || 2 ||",
  "S04n489:58": "śuddhaṃ ca śīlaṃ sada rakṣitavyaṃ",
  "S04n489:59": "dhūteṣu puṣṭiḥ sada vinditavyā |",
  "S04n489:60": "tyāgaśca prajñā ca niṣevitavyā |",
  "S04n489:61": "na durlabho eṣa samādhi bheṣyati || 3 ||",
  "S04n489:62": "tato labhitvā ima śāntabhūmi",
  "S04n489:63": "yasyāmabhūmiḥ pṛthu śrāvakāṇām |",
  "S04n489:64": "pratyakṣabhūtā sugatasya dharma",
  "S04n489:65": "pratilapsyathā buddhaguṇānacintiyān || 4 ||",
  "S04n489:66": "dṛṣṭvā narān bhājanabuddhimantān",
  "S04n489:67": "tān bodhicittasmi samādahetha |",
  "S04n489:68": "anuttare jñāni pratiṣṭhapitvā",
  "S04n489:69": "na durlabho eṣa samādhirājaḥ || 5 ||",
  "S04n489:70": "yasyārthi īrṣā puna saṃjaneyyā",
  "S04n489:71": "āhāri niṣyandiha pratyavekṣataḥ |",
  "S04n489:72": "paryeṣṭitaśco paribhogataśca",
  "S04n489:73": "na durlabho eṣa samādhi bheṣyate || 6 ||",
  "S04n489:74": "samādhirājo yadi vaiṣa śūnyato",
  "S04n489:75": "viśuddhaśīlānayu mūrdhni tiṣṭhati |",
  "S04n489:76": "svabhāvato dharma sadā samāhitā",
  "S04n489:77": "bālā na jānanti ayuktayogāḥ || 7 ||",
  "S04n489:78": "yeṣāmayaṃ śānta samādhiriṣṭo",
  "S04n489:79": "na teṣa jātu bhayabuddhi tiṣṭhati |",
  "S04n489:80": "sadānupaśyanti narāṇamuttama-",
  "S04n489:81": "mimāṃ niṣevitva praśāntabhūmim || 8 ||",
  "S04n489:82": "ākārato yaḥ smarate tathāgatān",
  "S04n489:83": "sa bhoti śāntendriyu śāntamānasaḥ |",
  "S04n489:84": "abhrāntacittaḥ satataṃ samāhitaḥ",
  "S04n489:85": "śrutena jñānena ca sāgaropamaḥ || 9 ||",
  "S04n489:86": "asmin samādhau hi pratiṣṭhihittvā",
  "S04n489:87": "yaścaṃkrame caṃkrami bodhisattvaḥ |",
  "S04n489:88": "sa paśyati buddhasahasrakoṭiya-",
  "S04n489:89": "staduttare yāttika gaṅgavālukāḥ || 10 ||",
  "S04n489:90": "unmādu gaccheya narasya cittaṃ",
  "S04n489:91": "yo buddhadharmāṇa pramāṇu gṛhṇīyāt |",
  "S04n489:92": "naivāpramāṇasya pramāṇamasti",
  "S04n489:93": "acintiyā sarvaguṇehi nāyakāḥ || 11 ||",
  "S04n489:94": "na so'sti sattvo daśasu diśāsu",
  "S04n489:95": "yo lokanāthena samaḥ kutottari |",
  "S04n489:96": "sarve hi sarvajñaguṇarupeta-",
  "S04n489:97": "mākāṅkṣatha lapsyatha buddhajñānam || 12 ||",
  "S04n489:98": "suvarṇavarṇena samucchrayeṇa",
  "S04n489:99": "samantaprāsādiku lokanāthaḥ |",
  "S04n489:100": "yasyātra ālambani cittu vartate",
  "S04n489:101": "samāhitaḥ socyati bodhisattvaḥ || 13 ||",
  "S04n489:102": "asaṃskṛtaṃ saṃskṛtu jñātva vijño",
  "S04n489:103": "nimittasaṃjñāya vibhāvitāya |",
  "S04n489:104": "so ānimitte bhavati pratiṣṭhitaḥ",
  "S04n489:105": "prajānatī śūnyaka sarvadharmān || 14 ||",
  "S04n489:106": "yo dharmakāye bhavati pratiṣṭhito",
  "S04n489:107": "abhāva jānāti sa sarvabhāvān |",
  "S04n489:108": "abhāvasaṃjñāya vibhāvitāya",
  "S04n489:109": "na rūpakāyena jinendra paśyati || 15 ||",
  "S04n489:110": "ārocayāmi prativedayāmi vo",
  "S04n489:111": "yathā yathā bahu ca vitarkayennaraḥ |",
  "S04n489:112": "tathā tathā bhavati tannimittacitta-",
  "S04n489:113": "stehi vitarkehi tanniśritehi || 16 ||",
  "S04n489:114": "evaṃ munīndraṃ smarato narasya",
  "S04n489:115": "ākārato jñānato aprameyataḥ |",
  "S04n489:116": "anusmṛtiṃ bhāvayataḥ sadā ca",
  "S04n489:117": "tannimnacittaṃ bhavatī tatproṇam || 17 ||",
  "S04n489:118": "sa caṃkramastho na niṣadyamāśrita",
  "S04n489:119": "ākāṅkṣate puruṣavarasya jñānam |",
  "S04n489:120": "ākāṅkṣamāṇaḥ praṇigheti bodhaye",
  "S04n489:121": "bhaviṣyahaṃ loki niruttaro jinaḥ || 18 ||",
  "S04n489:122": "sa buddha saṃjānati buddha paśyate",
  "S04n489:123": "buddhāna co dharmata pratyavekṣate |",
  "S04n489:124": "iha samādhismi pratiṣṭhihitvā",
  "S04n489:125": "namasyate buddha mahānubhāvān || 19 ||",
  "S04n489:126": "kāyena vācā ca prasanna mānasā",
  "S04n489:127": "buddhāna varṇaṃ bhaṇatī abhīkṣṇam |",
  "S04n489:128": "tathāhi so bhāvitacittasaṃtatī |",
  "S04n489:129": "rātriṃdivaṃ paśyati lokanāthān || 20 ||",
  "S04n489:130": "yadāpi so bhoti gilāna āturaḥ",
  "S04n489:131": "pravartate vedana māraṇāntikā |",
  "S04n489:132": "na buddhamārabhya smṛtiḥ pramuṣyate",
  "S04n489:133": "na vedanābhiranusaṃharīyati || 21 ||",
  "S04n489:134": "tathā hi tena vicinitva jñātā",
  "S04n489:135": "anāgatā āgata dharmaśūnyatā |",
  "S04n489:136": "so tādṛśe dharmanaye pratiṣṭhito",
  "S04n489:137": "na khidyate citta carantu cārikām || 22 ||",
  "S04n489:138": "tasmācchruṇitvā imu ānuśaṃsā",
  "S04n489:139": "janetha chandamatulāya bodhaye |",
  "S04n489:140": "mā paścakāle paritāpu bheṣyata",
  "S04n489:141": "sudurlabhaṃ sugatavarāṇa darśanam || 23 ||",
  "S04n489:142": "ahaṃ ca bhāṣeya praṇīta dharmaṃ",
  "S04n489:143": "yūyaṃ ca śrutvāna samācarethāḥ |",
  "S04n489:144": "bhaiṣajya vastrāṃ ca gṛhītva āturo-",
  "S04n489:145": "'panetu vyādhiṃ na prabhoti ātmanaḥ || 24 ||",
  "S04n489:146": "tasmādvidhijñena vicakṣaṇena",
  "S04n489:147": "imaṃ samādhiṃ pratikāṅkṣatā sadā |",
  "S04n489:148": "śīlaṃ śrutaṃ tyāgu niṣevitavyaṃ",
  "S04n489:149": "na durlabho eṣa samādhi bheṣyati || 25 ||",
  "S04n489:150": "iti śrīsamādhirāje buddhānusmṛtiparivarto nāma caturthaḥ ||"
}