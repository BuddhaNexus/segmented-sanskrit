{
  "SA20n1382:0": "dvitīyaḥ paricchedaḥ",
  "SA20n1382:1": "uktā samalā tathatā |",
  "SA20n1382:2": "nirmalā tathatedānīṃ vaktavyā |",
  "SA20n1382:3": "tatra katamā nirmalā tathatā yāsau buddhānāṃ bhagavatāmanāsravadhātau sarvākāramalavigamādāśrayaparivṛttirvyavasthāpyate |",
  "SA20n1382:4": "sā punaraṣṭau padārthānadhikṛtya samāsato veditavyā |",
  "SA20n1382:5": "aṣṭau padārthāḥ katame |",
  "SA20n1382:6": "śuddhiḥ prāptirvisaṃyogaḥ svaparārthastadāśrayaḥ |",
  "SA20n1382:7": "gambhīryaudāryamāhātmyaṃ yāvatkālaṃ yathā ca tat ||1 ||",
  "SA20n1382:8": "ityete'ṣṭau padārthā yathāsaṃkhyamanena ślokena paridīpitāḥ |",
  "SA20n1382:9": "tadyathā svabhāvārtho hetvarthaḥ phalārthaḥ karmārtho yogārtho vṛttyartho nityārtho'cintyārthaḥ |",
  "SA20n1382:10": "tatra yo'sau dhāturavinirmuktakleśakośastathāgatagarbha ityukto bhagavatā |",
  "SA20n1382:11": "tadviśuddhirāśrayaparivṛtteḥ svabhāvo veditavyaḥ |",
  "SA20n1382:12": "yata āha |",
  "SA20n1382:13": "yo bhagavan sarvakleśakośakoṭigūḍhe tathāgatagarbhe niṣkāṅkṣaḥ sarvakleśakośavinirmuktestathāgatadharmakāye'pi sa niṣkāṅkṣa iti |",
  "SA20n1382:14": "dvividhaṃ jñānaṃ lokottaramavikalpaṃ tatpṛṣṭhalabdhaṃ ca |",
  "SA20n1382:15": "laukikalokottarajñānamāśrayaparivṛttihetuḥ prāptiśabdena paridīpitaḥ |",
  "SA20n1382:16": "prāpyate'neneti prāptiḥ |",
  "SA20n1382:17": "tatphalaṃ dvividham |",
  "SA20n1382:18": "dvividho visaṃyogaḥ kleśāvaraṇavisaṃyogo jñeyāvaraṇavisaṃyogaśca |",
  "SA20n1382:19": "yathākramaṃ svaparārthasaṃpādanaṃ karma |",
  "SA20n1382:20": "tadadhiṣṭhānasamanvāgamo yogaḥ |",
  "SA20n1382:21": "tribhirgāmbhīryaudāryamāhātmyaprabhavitairbuddhakāyairnityamā bhavagateracintyena prakāreṇa vartanaṃ vṛttiriti | uddānam |",
  "SA20n1382:22": "svabhāvahetuphalataḥ karmayogapravṛttitaḥ |",
  "SA20n1382:23": "tannityācintyataścaiva buddhabhūmiṣvavasthitiḥ ||2 ||",
  "SA20n1382:24": "tatra svabhāvārthe hetvarthe cārabhya buddhatve tatprāptyupāye ca ślokaḥ |",
  "SA20n1382:25": "buddhatvaṃ prakṛtiprabhāsvaramiti proktaṃ yadāgantuka-",
  "SA20n1382:26": "kleśajñeyaghanābhrajālapaṭalacchannaṃ ravivyomavat |",
  "SA20n1382:27": "sarvairbuddhaguṇairupetamamalairnityaṃ dhruvaṃ śāśvataṃ",
  "SA20n1382:28": "dharmāṇāṃ tadakalpanapravicayajñānāśrayādāpyate ||3 ||",
  "SA20n1382:29": "asya ślokasyārthaḥ samāsena caturbhiḥ ślokairveditavyaḥ |",
  "SA20n1382:30": "buddhatvamavinirbhāgaśukladharmaprabhāvitam |",
  "SA20n1382:31": "ādityākāśavajjñānaprahāṇadvayalakṣaṇam ||4 ||",
  "SA20n1382:32": "gaṅgātīrarajo'tītairbuddhadharmaiḥ prabhāsvaraiḥ |",
  "SA20n1382:33": "sarvairakṛtakairyuktamavinirbhāgavṛtibhiḥ ||5 ||",
  "SA20n1382:34": "svabhāvāpariniṣpattivyāpitvāgantukatvataḥ |",
  "SA20n1382:35": "kleśajñeyāvṛtistasmānmeghavat samudāhṛtā ||6 ||",
  "SA20n1382:36": "dvayāvaraṇaviśleṣaheturjñānadvayaṃ punaḥ |",
  "SA20n1382:37": "nirvikalpa ca tatpṛṣṭhalabdhaṃ tajjñānamiṣyate ||7 ||",
  "SA20n1382:38": "yaduktamāśrayaparivṛtteḥ svabhāvo viśuddhiriti tatra viśuddhiḥ samāsato dvividhā |",
  "SA20n1382:39": "prakṛtiviśuddhirvaimalyaviśuddhiśca |",
  "SA20n1382:40": "tatra prakṛtiviśuddhiryā vimuktirna ca visaṃyogaḥ prabhāsvarāyāścittaprakṛterāgantukamalāvisaṃyogāt |",
  "SA20n1382:41": "vaimalyaviśuddhirvimuktirvisaṃyogaśca vāryādīnāmiva rajojalādibhyaḥ prabhāsvarāyāścittaprakṛteranavaśeṣamāgantukamalebhyo visaṃyogāt |",
  "SA20n1382:42": "tatra vaimalyaviśuddhau phalārthamārabhya dvau ślokau |",
  "SA20n1382:43": "hrada iva vimalāmbuḥ phullapadmakramāḍhyaḥ |",
  "SA20n1382:44": "sakala eva śaśāṅko rāhuvaktrādvimuktaḥ |",
  "SA20n1382:45": "raviriva jaladādikleśanirmuktaraśmi-",
  "SA20n1382:46": "rvimalaguṇayutatvādbhāti muktaṃ tadeva ||8 ||",
  "SA20n1382:47": "munivṛṣamadhusārahemaratna-",
  "SA20n1382:48": "pravaranidhānamahāphaladrumābham |",
  "SA20n1382:49": "sugatavimalaratnavigrahāgra-",
  "SA20n1382:50": "kṣitipatikāñcanabimbavajjinatvam ||9 ||",
  "SA20n1382:51": "asya khalu ślokadvayasyārthaḥ samāsato'ṣṭābhiḥ ślokairveditavyaḥ |",
  "SA20n1382:52": "rāgādyāgantukakleśaśuddhirambuhradādivat |",
  "SA20n1382:53": "jñānasya nirvikalpasya phalamuktaṃ samāsataḥ ||10 ||",
  "SA20n1382:54": "sarvākāravaropetabuddhabhāvanidarśanam |",
  "SA20n1382:55": "phalaṃ tatpṛṣṭhalabdhasya jñānasya paridīpitam ||11 ||",
  "SA20n1382:56": "svacchāmbuhradavadrāgarajaḥkāluṣyahānitaḥ |",
  "SA20n1382:57": "vineyāmburuhadhyānavāryabhiṣyandanācca tat ||12 ||",
  "SA20n1382:58": "dveṣarāhupramuktatvā nmahāmaitrīkṛpāṃśubhiḥ |",
  "SA20n1382:59": "jagatspharaṇataḥ pūrṇavimalendūpamaṃ ca tat ||13 ||",
  "SA20n1382:60": "mohābhrajālanirmokṣājjagati jñānaraśmibhiḥ |",
  "SA20n1382:61": "tamovidhamanāttacca buddhatvamamalārkavat ||14 ||",
  "SA20n1382:62": "atulyatulyadharmatvāt saddharmarasadānataḥ |",
  "SA20n1382:63": "phalguvyapagamāttacca sugatakṣaudrasāravat ||15 ||",
  "SA20n1382:64": "pavitratvādguṇadravyadāridrayavinivartanāt |",
  "SA20n1382:65": "vimuktiphaladānācca suvarṇanidhivṛkṣavat ||16 ||",
  "SA20n1382:66": "dharmaratnātmabhāvatvād dvipadāgrādhipatyataḥ |",
  "SA20n1382:67": "rūparatnākṛtitvācca tadratnanṛpa bimbavat ||17 ||",
  "SA20n1382:68": "yattu dvividhaṃ lokottaramavikalpaṃ tatpṛṣṭhalabdhaṃ ca jñānamāśrayaparivṛtterheturvisaṃyogaphalasaṃjñitāyāḥ |",
  "SA20n1382:69": "tatkarma svaparārthasaṃpādanamityuktam |",
  "SA20n1382:70": "tatra katamā svaparārthasaṃpat |",
  "SA20n1382:71": "yā savāsanakleśajñeyāvaraṇavimokṣādanāvaraṇadharmakāyaprāptiriyamucyate svārthasaṃpattiḥ |",
  "SA20n1382:72": "yā tadūrdhvamā lokādanābhogataḥ kāyadvayena saṃdarśanadeśanāvibhutvadvayapravṛttiriyamucyate parārthasaṃpattirit |",
  "SA20n1382:73": "tasyāṃ svaparārthasaṃpattau karmārthamārabhya trayaḥ ślokāḥ |",
  "SA20n1382:74": "anāsravaṃ vyāpyavināśadharmi ca",
  "SA20n1382:75": "dhruvaṃ śivaṃ śāśvatamacyutaṃ padam |",
  "SA20n1382:76": "tathāgatatvaṃ gaganopamaṃ satām",
  "SA20n1382:77": "ṣaḍindiyārthānubhaveṣu kāraṇam ||18 ||",
  "SA20n1382:78": "vibhūtirūpārthavidarśane sadā",
  "SA20n1382:79": "nimittabhūtaṃ sukathāśuciśrave |",
  "SA20n1382:80": "tathāgatānāṃ śuciśīlajighraṇe",
  "SA20n1382:81": "mahāryasaddharmarasāgravindane ||19 ||",
  "SA20n1382:82": "samādhisaṃsparśasukhānubhūtiṣu",
  "SA20n1382:83": "svabhāvagāmbhīryanayāvabodhane |",
  "SA20n1382:84": "susūkṣmacintāparamārthagavharaṃ",
  "SA20n1382:85": "tathāgatavyoma nimittavarjitam ||20 ||",
  "SA20n1382:86": "asya khalu ślokatrayasyārthaḥ samāsato'ṣṭabhiḥ ślokairveditavyaḥ |",
  "SA20n1382:87": "karma jñānadvayasyatadveditavyaṃ samāsataḥ |",
  "SA20n1382:88": "pūraṇaṃ muktikāyasya dharmakāyasya śodhanam ||21 ||",
  "SA20n1382:89": "vimuktidharmakāyau ca veditavyau dvirekadhā |",
  "SA20n1382:90": "anāsravatvādvyāpitvādasaṃskṛtapadatvataḥ ||22 ||",
  "SA20n1382:91": "anāsravatvaṃ kleśānāṃ savāsanani rodhataḥ |",
  "SA20n1382:92": "asaṅgāpratighātatvājjñānasya vyāpitā matā ||23 ||",
  "SA20n1382:93": "asaṃskṛtatvamatyantamavināśasvabhāvataḥ |",
  "SA20n1382:94": "avināśitvamuddeśastannirdeśo dhruvādibhiḥ ||24 ||",
  "SA20n1382:95": "nāśaścaturvidho jñeyo dhruvatvādiviparyayāt |",
  "SA20n1382:96": "pūrtirvikṛtirucchittiracintyanamanacyutiḥ ||25 ||",
  "SA20n1382:97": "tadabhāvāddhruvaṃ jñeyaṃ śivaṃ śāśvatamacyutam |",
  "SA20n1382:98": "padaṃ tadamalajñānaṃ śukladharmāspadatvataḥ ||26 ||",
  "SA20n1382:99": "yathānimittamākāśaṃ nimittaṃ rūpadarśane |",
  "SA20n1382:100": "śabdagandharaspṛśyadharmāṇāṃ ca śravādiṣu ||27 ||",
  "SA20n1382:101": "indriyārtheṣu dhīrāṇāmanāsravaguṇodaye |",
  "SA20n1382:102": "hetuḥ kāyadvayaṃ tadvadanāvaraṇayogataḥ ||28 ||",
  "SA20n1382:103": "yaduktamākāśalakṣaṇo buddha iti tatpāramārthikamāveṇikaṃ tathāgatānāṃ buddhalakṣaṇamabhisaṃdhāyoktam |",
  "SA20n1382:104": "evaṃ hyāha |",
  "SA20n1382:105": "saṃceddvātriṃśanmahāpuruṣalakṣaṇaistathāgato draṣṭavyo'bhaviṣyattadrājāpi cakravartī tathāgato'bhaviṣyaditi |",
  "SA20n1382:106": "tatra paramārthalakṣaṇe yogārthamārabhya ślokaḥ |",
  "SA20n1382:107": "acintyaṃ nityaṃ ca dhruvamatha śivaṃ śāśvatamatha",
  "SA20n1382:108": "praśāntaṃ ca vyāpi vyapagatavikalpaṃ gaganavat |",
  "SA20n1382:109": "asaktaṃ sarvatrāparatighaparuṣasparśavigataṃ",
  "SA20n1382:110": "na dṛśyaṃ na grāhyaṃ śubhamapi ca buddhatvamamalam ||29 ||",
  "SA20n1382:111": "atha khalvasya ślokasyārthaḥ samāsato'ṣṭābhiḥ ślokairveditavyaḥ |",
  "SA20n1382:112": "vimuktidharmakāyābhyāṃ svaparārtho nidarśitaḥ |",
  "SA20n1382:113": "svaparārthāśraye tasmin yogo'cintyādibhirguṇaiḥ ||30 ||",
  "SA20n1382:114": "acintyamanugantavyaṃ trijñānāviṣayatvataḥ |",
  "SA20n1382:115": "sarvajñajñānaviṣayaṃ buddhatvaṃ jñānadehibhiḥ ||31 ||",
  "SA20n1382:116": "śrutasyāviṣayaḥ saukṣmyāccintāyāḥ paramārthataḥ |",
  "SA20n1382:117": "laukyādibhāvanāyāśca dharmatāgavharatvataḥ ||32 ||",
  "SA20n1382:118": "dṛṣṭapūrvaṃ na tadyasmādvālairjātyandhakāyavat |",
  "SA20n1382:119": "āryaiśca sūtikāmadhyasthita bālārkabimbavat ||33 ||",
  "SA20n1382:120": "utpādavigamānnityaṃ nirodhavigamāddhruvam |",
  "SA20n1382:121": "śivametaddvayābhāvācchāśvataṃ dharmatāsthiteḥ ||34 ||",
  "SA20n1382:122": "śāntaṃ nirodhasatyatvādvyāpi sarvāvabodhataḥ |",
  "SA20n1382:123": "akalpamapratiṣṭhānādasaktaṃ kleśahānitaḥ ||35 ||",
  "SA20n1382:124": "sarvatrāpratighaṃ sarvajñeyāvaraṇaśuddhitaḥ |",
  "SA20n1382:125": "paruṣasparśanirmuktaṃ mṛdukarmaṇyabhāvataḥ ||36 ||",
  "SA20n1382:126": "adṛśyaṃ tadarūpitvādagrāhyamanimittataḥ |",
  "SA20n1382:127": "śubhaṃ prakṛtiśuddhatvādamalaṃ malahānitaḥ ||37 ||",
  "SA20n1382:128": "yatpunaretadākāśavadasaṃskṛtaguṇāvinirbhāgavṛttyāpi tathāgatatvāmā bhavagateracintyamahopāyakruṇājñānaparikarmaviśeṣeṇa jagaddhitasukhādhānanimittamamalai stribhiḥ svabhāvikasāṃbhogikanairmāṇikaiḥ kāyairanuparatamanucchinnamanābhogena pravartata iti draṣṭavyamāveṇīkadharmayutatvāditi |",
  "SA20n1382:129": "tatra vṛttyarthamārabhya buddhakāyavibhāge catvāraḥ ślokāḥ |",
  "SA20n1382:130": "anādimadhyāntamabhinnamadvayaṃ",
  "SA20n1382:131": "tridhā vimuktaṃ vimalāvikalpakam |",
  "SA20n1382:132": "samāhitā yoginastatprayatnāḥ",
  "SA20n1382:133": "paśyanti yaṃ dharmadhātusvabhāvam ||38 ||",
  "SA20n1382:134": "ameyagaṅgāsikatātivṛttai-",
  "SA20n1382:135": "rguṇairacintyairasamairupetaḥ |",
  "SA20n1382:136": "savāsanonmūlitasarvadoṣa-",
  "SA20n1382:137": "stathāgatānāmamalaḥ sa dhātuḥ ||39 ||",
  "SA20n1382:138": "vicitrasaddharmamayūkhavigrahai-",
  "SA20n1382:139": "rjagadvimokṣārthasamāhṛtodyamaḥ |",
  "SA20n1382:140": "kriyāsu cintāmaṇirājaratnava-",
  "SA20n1382:141": "dvicitrabhāvo na ca tatsvabhavavān ||40 ||",
  "SA20n1382:142": "lokeṣu yacchāntipathāvatāra-",
  "SA20n1382:143": "prapācanāvyākaraṇe nidānam |",
  "SA20n1382:144": "bimbaṃ tadapyatra sadāvaruddha-",
  "SA20n1382:145": "mākāśadhātāviva rūpadhātuḥ ||41 ||",
  "SA20n1382:146": "eṣāṃ khalu caturṇāṃ ślokānāṃ piṇḍārtho viṃśatiślokairveditavyaḥ |",
  "SA20n1382:147": "yattadbuddhatvamityuktaṃ sarvajñatvaṃ svayaṃbhuvām |",
  "SA20n1382:148": "nirvṛtiḥ paramācintyaprāptiḥ pratyātmaveditā ||42 ||",
  "SA20n1382:149": "tatprabhedastribhiḥ kāyairvṛttiḥ svābhāvikādibhiḥ |",
  "SA20n1382:150": "gāmbhīryaidāryamāhātmyaguṇadharmaprabhāvitaiḥ ||43 ||",
  "SA20n1382:151": "tatra svabhāvikaḥ kāyo buddhānāṃ pañcalakṣaṇaḥ |",
  "SA20n1382:152": "pañcākāraguṇopeto veditavyaḥ samāsataḥ ||44 ||",
  "SA20n1382:153": "asaṃskṛtamasaṃbhinnamantadvayavivarjitam |",
  "SA20n1382:154": "kleśajñeyasamāpattitrayāvaraṇaniḥsṛtam ||45 ||",
  "SA20n1382:155": "vaimalyādavikalpatvādyogināṃ gocaratvataḥ |",
  "SA20n1382:156": "prabhāsvaraṃ viśuddhaṃ ca dharmadhātoḥ svabhāvataḥ ||46 ||",
  "SA20n1382:157": "aprameyairasaṃkhyeyairacintyairasamairguṇaiḥ |",
  "SA20n1382:158": "viśuddhipāramīprāptairyuktaṃ svābhāvikaṃ vapuḥ ||47 ||",
  "SA20n1382:159": "udāratvādagaṇyatvāt tarkasyāgocaratvataḥ |",
  "SA20n1382:160": "kaivalyādvāsanocchitteraprameyādayaḥ kramāt ||48 ||",
  "SA20n1382:161": "vicitradharmasaṃbhogarūpadharmāvabhāsataḥ |",
  "SA20n1382:162": "karuṇāśuddhiniṣyandasattvārthāsraṃsanatvataḥ ||49 ||",
  "SA20n1382:163": "nirvikalpaṃ nirābhogaṃ yathābhiprāyapūritaḥ |",
  "SA20n1382:164": "cintāmaṇiprabhāvarddheḥ sāṃbhogasya vyavasthitiḥ ||50 ||",
  "SA20n1382:165": "deśane darśane kṛtyāsraṃsane'nabhisaṃskṛtau |",
  "SA20n1382:166": "atatsvabhāvākhyāne ca citratoktā ca pañcadhā ||51 ||",
  "SA20n1382:167": "raṅgapratyayavaicitryādatadbhāvo yathā maṇeḥ |",
  "SA20n1382:168": "sattvapratyayavaicitryādatadbhāvastathā vibhoḥ ||52 ||",
  "SA20n1382:169": "mahākaruṇayā kṛtsnaṃ lokamālokya lokavit |",
  "SA20n1382:170": "dharmakāyādaviralaṃ nirmāṇaiścitrarūpibhiḥ ||53 ||",
  "SA20n1382:171": "jātakānyupapattiṃ ca tuṣiteṣu cyutiṃ tataḥ |",
  "SA20n1382:172": "garbhā[va]kramaṇaṃ janma śilpasthānāni kauśalam ||54 ||",
  "SA20n1382:173": "antaḥpuraratikrīḍāṃ naiṣkramyaṃ duḥkhacārikām |",
  "SA20n1382:174": "bodhimaṇḍopasaṃkrāntiṃ mārasainyapramardanam ||55 ||",
  "SA20n1382:175": "saṃbodhiṃ dharmacakraṃ ca nirvāṇādhigamakriyām |",
  "SA20n1382:176": "kṣetreṣvapariśuddheṣu darśayatyā bhavasthite ||56 ||",
  "SA20n1382:177": "anityaduḥkhanairātmyaśāntiśabdairupāyavit |",
  "SA20n1382:178": "udvejya tribhavāt sattvān pratārayati nirvṛttau ||57 ||",
  "SA20n1382:179": "śāntimārgāvatīrṇāśca prāpyanirvāṇasaṃjñinaḥ |",
  "SA20n1382:180": "saddharmapuṇḍarīkādidharmatattvaprakāśanaiḥ ||58 ||",
  "SA20n1382:181": "pūrvagrahānnivartyaitān prajñopāyaparigrahāt |",
  "SA20n1382:182": "paripācyottame yāne vyākarotyagrabodhaye ||59 ||",
  "SA20n1382:183": "saukṣmyāt prabhāvasaṃpatterbālasārthātivāhanāt |",
  "SA20n1382:184": "gāmbhīryau dāryamāhatmyameṣu jñeyaṃ yathākramam ||60 ||",
  "SA20n1382:185": "prathamo dharmakāyo'tra rūpakāyau tu paścimau |",
  "SA20n1382:186": "vyomni rūpagatasyeva prathame'ntyasya vartanam ||61 ||",
  "SA20n1382:187": "tasyaiva kāyatrayasya jagaddhitasukhādhānavṛttau nityārthamārabhya ślokaḥ |",
  "SA20n1382:188": "hetvānantyāt sattvadhātvakṣayatvāt",
  "SA20n1382:189": "kāruṇyaddhirjñānasaṃpattiyogāt |",
  "SA20n1382:190": "dharmaiśvaryānmṛtyumārāvabhaṅgān",
  "SA20n1382:191": "naiḥsvā bhāvyācchāśvato lokanāthaḥ ||62 ||",
  "SA20n1382:192": "asya piṇḍārthaḥ ṣaḍbhiḥ ślokairveditavyaḥ |",
  "SA20n1382:193": "kāyajīvitabhogānāṃ tyāgaiḥ saddharmasaṃgrahāt |",
  "SA20n1382:194": "sarvasattvahitāyādipratijñottaraṇatvataḥ ||63 ||",
  "SA20n1382:195": "buddhatve suviśuddhāyāḥ karuṇāyāḥ pravṛttitaḥ |",
  "SA20n1382:196": "ṛddhipādaprakāśācca tairavasthānaśaktitaḥ ||64 ||",
  "SA20n1382:197": "jñānena bhavanirvāṇadvayagrahavimuktitaḥ |",
  "SA20n1382:198": "sadācintyasamādhānasukhasaṃpattiyogataḥ ||65 ||",
  "SA20n1382:199": "loke vicarato lokadharmairanupalepataḥ |",
  "SA20n1382:200": "śamāmṛtapadaprāptau mṛtyumārāpracārataḥ ||66 ||",
  "SA20n1382:201": "asaṃskṛtasvabhāvasya munerādipraśāntitaḥ |",
  "SA20n1382:202": "nityamaśaraṇānāṃ ca śaraṇābhyupapattitaḥ ||67 ||",
  "SA20n1382:203": "saptabhiḥ kāraṇairādyairnityatā rūpakāyataḥ |",
  "SA20n1382:204": "paścimaiśca tribhiḥ śāsturnityatā dharmakāyataḥ ||68 ||",
  "SA20n1382:205": "sa cāyamāśrayaparivṛttiprabhāvitastathāgatānāṃ prāptinayo'cintyanayenānugantavya iti |",
  "SA20n1382:206": "acintyārthamārabhya ślokaḥ |",
  "SA20n1382:207": "avākyavattvāt paramārthasaṃgrahā-",
  "SA20n1382:208": "datarkabhūmerupamanivṛttitaḥ |",
  "SA20n1382:209": "niruttaratvādbhavaśāntyanudgrahā-",
  "SA20n1382:210": "dacintya āryairapi buddhagocaraḥ ||69 ||",
  "SA20n1382:211": "asya piṇḍārthaścaturbhiḥ ślokairveditavyaḥ |",
  "SA20n1382:212": "acintyo'nabhilāpyatvādalāpyaḥ paramārthataḥ |",
  "SA20n1382:213": "paramārtho'pratavaryatvādatarkyo vyanumeyataḥ ||70 ||",
  "SA20n1382:214": "vyanumeyo'nuttaratvādānuttaryamanudgrahāt |",
  "SA20n1382:215": "anudgraho'pratiṣṭhānādaguṇadoṣāvikalpanāt ||71 ||",
  "SA20n1382:216": "pañcabhiḥ kāraṇaiḥ saukṣmyādicintyo dharmakāyataḥ |",
  "SA20n1382:217": "ṣaṣṭhenātattvabhāvitvādacintyo rūpakāyataḥ ||72 ||",
  "SA20n1382:218": "anuttarajñānamahākṛpādibhi-",
  "SA20n1382:219": "rguṇairacintyā guṇapāragā jināḥ |",
  "SA20n1382:220": "ataḥ kramo'ntyo'yamapi svayaṃbhuvo",
  "SA20n1382:221": "'bhiṣekalabdhā na maharṣayo viduriti ||73 ||",
  "SA20n1382:222": "iti ratnagotravibhāge mahāyānottaratantraśāstre bodhyadhikāro nāma dvitīyaḥ paricchedaḥ ||2 ||"
}