{
  "S04n298:0": "2 vimalā nāma dvitīyā bhūmiḥ |",
  "S04n298:1": "upakramagāthāḥ |",
  "S04n298:2": "śrutvaitaduttamaṃ sthānaṃ bhūmyāḥ śreṣṭhaṃ manoramam |",
  "S04n298:3": "prasannamanasaṃkalpaharṣitāḥ sugatātmajāḥ || 1 ||",
  "S04n298:4": "abhyutthitā āsanebhya abhyudgamya khagapathe |",
  "S04n298:5": "abhyokiranti kusumaiḥ sādhviti vyāharī girā || 2 ||",
  "S04n298:6": "sādhu sādhu mahāprājña vajragarbha viśārada |",
  "S04n298:7": "yannirdiṣṭā tvayā bhūmi bodhisattvāna yā carī || 3 ||",
  "S04n298:8": "parṣaddhi viprasannā tu vimukticandraḥ pṛcchati |",
  "S04n298:9": "uttariṃ kīrtiyā bhūmiṃ dvitīyāṃ sugatātmajāḥ || 4 ||",
  "S04n298:10": "kīdṛśā manasaṃkalpā dvitīyāmabhilakṣataḥ |",
  "S04n298:11": "pravyāhara mahāprājña śrotukāmā jinātmajāḥ || 5 ||",
  "S04n298:12": "upasaṃhāragāthāḥ |",
  "S04n298:13": "te mārdavārjavamṛdūkarmaṇīyacittāḥ",
  "S04n298:14": "kalyāṇaāśaya damāśayatābhyupetāḥ |",
  "S04n298:15": "saṃsargapekṣavigatāśca udārabuddhi",
  "S04n298:16": "māhātmya āśayavid dvitīyākramanti || 6 ||",
  "S04n298:17": "atra sthitā guṇadharāḥ kuśalopapetāḥ",
  "S04n298:18": "prāṇātipātavigatā avihiṃsacittāḥ |",
  "S04n298:19": "adattadānapagatāḥ paradāratāṃ ca",
  "S04n298:20": "satyānvitā apiśunaḥ puruṣapradhānāḥ || 7 ||",
  "S04n298:21": "parabhogabhidyavigatā vidu maitracittāḥ",
  "S04n298:22": "samyakpathe upagatā aśaṭhajñakāśca |",
  "S04n298:23": "nirmāṇakāyagrahaṇāśca supeśalāśca",
  "S04n298:24": "rakṣanti śāstuśaraṇaṃ sada apramattāḥ || 8 ||",
  "S04n298:25": "duḥkhāni yāni niraye tatha tiryagyonau",
  "S04n298:26": "yamaśāsane jvalitaāśrayanityupetāḥ |",
  "S04n298:27": "sarve ti pāpapatitākṣalāḥ prabhonti",
  "S04n298:28": "hantā vivarjiya upemahi satyadharmam || 9 ||",
  "S04n298:29": "ādau ca kṛtva manujānupapattimiṣṭāṃ",
  "S04n298:30": "yāvadbhavāgramaraṇāśayadhyānu śikṣām |",
  "S04n298:31": "pratyekayānamatha śrāvakabuddhayānaṃ",
  "S04n298:32": "sarve ito daśabhi śuklapathaiḥ prabhūtam || 10 ||",
  "S04n298:33": "evaṃ viditva satataṃ vidu apramattāḥ",
  "S04n298:34": "śīleṣu saṃsthita parānapi sthāpayanti |",
  "S04n298:35": "bhūyottare karuṇaāśayatābhyupetāḥ",
  "S04n298:36": "sattvān viditva dukhitān kṛpa saṃjanenti || 11 ||",
  "S04n298:37": "hanto vidṛṣṭipatitā imi bālabuddhī",
  "S04n298:38": "krodhopanāhadrutacitta vivādaprāptāḥ |",
  "S04n298:39": "satataṃ atṛpta viṣaye bhuyu prārthayanti",
  "S04n298:40": "trinidāna sattva parimocayitavya ete || 12 ||",
  "S04n298:41": "mahaandhakāratamasāvṛta mohachannāḥ",
  "S04n298:42": "kāntāramārgapatitā mahadṛṣṭijāle |",
  "S04n298:43": "saṃsārapañjaragatā ripu dharṣayanti",
  "S04n298:44": "mokṣāmyahaṃ namucipañjaramadhyaprāptān || 13 ||",
  "S04n298:45": "kleśormibhihriyata oghacaturnimagnā",
  "S04n298:46": "traidhātuke dukhaśataiḥ paripīḍyamānāḥ |",
  "S04n298:47": "skandhālayābhyupagatā vṛtaātmasaṃjñā",
  "S04n298:48": "teṣārthi yujyami ahaṃ dukhamocanārtham || 14 ||",
  "S04n298:49": "avasṛjya śreṣṭhapravaraṃ ima buddhajñānaṃ",
  "S04n298:50": "sati eva niḥsaraṇi hīnamatiṃ janenti |",
  "S04n298:51": "sthāpemi tān vimalajñāni tathāgatānāṃ",
  "S04n298:52": "vīryārabhanti atulaṃ vidu bodhihetoḥ || 15 ||",
  "S04n298:53": "atra sthitā guṇaśatopacitā maharṣi",
  "S04n298:54": "paśyanti naikasugatānapi pūjayanti |",
  "S04n298:55": "teṣāṃ śubhaṃ bhuyu uttapyati kalpakoṭyāṃ",
  "S04n298:56": "kāsīsakāñcanavaraṃ ca yathā nikṣiptam || 16 ||",
  "S04n298:57": "atra sthitā jinasutā nṛpacakravarti",
  "S04n298:58": "bhūtvā praṇenti daśabhiḥ kuśalebhi sattvān |",
  "S04n298:59": "yaccaiva saṃci śubhasaṃcaya saṃcinanti",
  "S04n298:60": "trātā bhavema jagato daśabhirbalāḍhyaiḥ || 17 ||",
  "S04n298:61": "ākāṅkṣamāṇa vijahitva ca rajabhogān",
  "S04n298:62": "pravrajya śāsanavare upagamya dhīrāḥ |",
  "S04n298:63": "vīryānvitā labhiya śreṣṭhavaraṃ samādhiṃ",
  "S04n298:64": "buddhā sahasra paripūrṇa kṣeṇe dṛśanti || 18 ||",
  "S04n298:65": "evaṃvidhā gaṇanayā bhuyu anya nekā",
  "S04n298:66": "ādarśayanti vṛṣabhī sthita atra bhūmau |",
  "S04n298:67": "ata uttari praṇidhijñānavarābhyupetā",
  "S04n298:68": "naikā vikurvitavidhau vinayanti sattvān || 19 ||",
  "S04n298:69": "ityeṣā dvitiyā bhūmirnirdiṣṭā sugatātmajāḥ |",
  "S04n298:70": "sarvalokahitaiṣīṇāṃ bodhisattvānanuttamā || 20 ||"
}