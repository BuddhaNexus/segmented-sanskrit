{
    "1347:0": "aṣṭamo'dhikāraḥ",
    "1347:1": "bodhisattvaparipāke saṃgrahaḥ ślokaḥ|",
    "1347:2": "rūciḥ prasādaḥ praśamo 'nukampanā",
    "1347:3": "kṣamātha medhā prabalatvameva ca|",
    "1347:4": "ahāryatāṅgaiḥ samupetatā bhṛśaṃ",
    "1347:5": "jinātmaje tatparipākalakṣaṇam||1||",
    "1347:6": "sumitratāditrayamugravīryatā parārdhaniṣṭhottamadharmasaṃgrahaḥ|",
    "1347:7": "kṛpālusaddharmamahāparigrahe mataṃ hi samyakparipākalakṣaṇam||2||",
    "1347:8": "guṇajñatāthāśusamādhilābhitā",
    "1347:9": "phalānubhūtirmanaso'dhyabheda[dya?]tā|",
    "1347:10": "jinātmaje śāstari saṃprapattaye",
    "1347:11": "mataṃ hi samyakparipākalakṣaṇam||3||",
    "1347:12": "susaṃvṛttiḥ kliṣṭavitarkavarjanā",
    "1347:13": "nirantarāyo'tha śubhābhirāmatā|",
    "1347:14": "jīnātmaje kleśavinodanāyatan-",
    "1347:15": "mataṃ hi samyakparipākalakṣaṇam||4||",
    "1347:16": "kṛpā prakṛtyā paraduḥkhadarśanaṃ",
    "1347:17": "nihīnacittasya ca saṃpravarjanam|",
    "1347:18": "viśeṣagatvaṃ jagadagrajanmatā",
    "1347:19": "parānukampāparipākalakṣaṇam||5||",
    "1347:20": "dhṛtiḥ prakṛtyā pratisaṃkhyabhāvanā",
    "1347:21": "sudaḥkhaśītādyadhivāsanā sadā|",
    "1347:22": "viśeṣagāmitvaśubhābhirāmatā",
    "1347:23": "mataṃ kṣamāyāḥ paripākalakṣaṇam||6||",
    "1347:24": "vipākaśuddhiḥ śravaṇādyamoṣatā",
    "1347:25": "praviṣṭatā sūktadurūktayostathā|",
    "1347:26": "smṛtermahābuddhayudaye ca yogyatā",
    "1347:27": "sumedhatāyāḥ paripākalakṣaṇam||7||",
    "1347:28": "śubhadvayena dvayadhātupuṣṭatā phalodaye cāśrayayogyatā parā|",
    "1347:29": "manorathāptirjagadagrabhūtatā balopalambhe paripākalakṣaṇam||8||",
    "1347:30": "sudharmatāyuktivicāraṇāśayo",
    "1347:31": "viśeṣalābhaḥ parapakṣadūṣaṇam|",
    "1347:32": "punaḥ sadā māranirantarāyatā",
    "1347:33": "ahāryatāyāḥ paripākalakṣaṇam||9||",
    "1347:34": "śubhācayo 'thāśrayayatnayogyatā",
    "1347:35": "vivekatodagraśubhābhirāmatā|",
    "1347:36": "jinātmaje hyaṅgasamanvaye puna-",
    "1347:37": "rmataṃ hi samyakparipākalakṣaṇam||10||",
    "1347:38": "iti navavidhavastupācitātmā",
    "1347:39": "paraparipācanayogyatāmupetaḥ|",
    "1347:40": "śubha[dharma]mayasatatapravardhitātmā",
    "1347:41": "bhavati sadā jagato 'grabandhubhūtaḥ||11||",
    "1347:42": "vraṇe'pi bhojye paripāka iṣyate yathaiva tatsrāvaṇabhogayogyatā|",
    "1347:43": "tathāśraye'smindvayapakṣaśāntatā[tāṃ]tathopabhogatvasuśāntapakṣatā",
    "1347:44": "[muśantipakvatām]||12||",
    "1347:45": "vipācanoktā paripācanā tathā",
    "1347:46": "prapācanā cāpyanupācanāparā|",
    "1347:47": "supācanā[cā]pyadhipācanā matā",
    "1347:48": "nipācanotpācananā ca dehiṣu ||13||",
    "1347:49": "hitāśayeneha yathā jinātmajo",
    "1347:50": "vyavasthitaḥ sarvajagadvipācayan|",
    "1347:51": "tathā na mātā na pitā na bandhavaḥ",
    "1347:52": "suteṣu bandhuṣvapi suvyavasthitāḥ||14||",
    "1347:53": "tathājano nātmani vatsalo mataḥ",
    "1347:54": "kuto'pi susnigdhaparāśraye jane|",
    "1347:55": "yathā kṛpātmā parasatvavatsalo",
    "1347:56": "hite sukhe caiva niyojanātmataḥ||15||",
    "1347:57": "na bodhisattvasya śarīrabhogayoḥ pareṣvadeyaṃ punarasti sarvathā|",
    "1347:58": "anugraheṇa dvividhena pācayan paraṃ samairdānaguṇairna tṛpyate||16||",
    "1347:59": "sadāprakṛtyādhyavihiṃsakaḥ svayaṃ",
    "1347:60": "rato'pramatto'tra paraṃ niveśayan|",
    "1347:61": "paraṃparānugrahakṛt dvidhā pare",
    "1347:62": "vipākaniṣyandaguṇena pācakaḥ||17||",
    "1347:63": "pare'pakāriṇyupakāribuddhimān",
    "1347:64": "pramarṣayannugramapi vyatikramam|",
    "1347:65": "upāyacittairapakāramarṣaṇaiḥ",
    "1347:66": "śubhe samādāpayate'pakāriṇaḥ||18||",
    "1347:67": "punaḥ sa yatnaṃ paramaṃ samāśrito",
    "1347:68": "na khidyate kalpasahasrakoṭibhiḥ|",
    "1347:69": "jinātmajaḥ sa[ttva]gaṇaṃ prapācayan",
    "1347:70": "paraikacittasya śubhasya kāraṇāt||19||",
    "1347:71": "vaśitvamāgamya manasyanuttaraṃ",
    "1347:72": "paraṃ samāvarjayate'tra śāsane|",
    "1347:73": "nihatya sarvāmavamānakāmatāṃ",
    "1347:74": "śubhena saṃvardhayate ca taṃ punaḥ||20||",
    "1347:75": "sa tatvabhāvārthanaye suniścitaḥ karoti satvānsuvinīta saṃśayān|",
    "1347:76": "tataśca te tajjinaśāsanādarād vivardhayante svaparaṃ guṇaiḥ śubhaiḥ||21||",
    "1347:77": "iti sugatigatau śubhatraye vā jagadakhilaṃ kṛpayā sa bodhisattvaḥ|",
    "1347:78": "tanuparamavimadhyamaprakārairvinayati lokasamānabhāvagatyā||22||",
    "1347:79": "|| mahāyānasūtrālaṃkāre paripākādhikāro'ṣṭamaḥ||"
}