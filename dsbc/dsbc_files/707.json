{
    "707:0": "15 | tattvaviṃśikā |",
    "707:1": "namaḥ sarvvajñāya |",
    "707:2": "prajñā citraṃ vipākaśca vimarddaśca vilakṣaṇam |",
    "707:3": "asyāstattvamato viddhi yenāsi jagato vibhuḥ ||1||",
    "707:4": "prajñā bhavaḥ samaścāsau trikāyaṃ tu triyānakam |",
    "707:5": "saiva cakraṃ sukhopāyaṃ yoginātadahaṃ param ||2||",
    "707:6": "mañjuvajro mahāmāyā vajraḍākastathā&#39;pare |",
    "707:7": "prajñaiva bhedato bhāti muktiḥ saiva jinātmikā ||3||",
    "707:8": "acintyaṃ cintitaṃ caiva advayaṃ dvayameva ca |",
    "707:9": "sarvvākāravaropetaṃ bhāvābhāvau grahāgrahau ||4||",
    "707:10": "vijñāyāpagataṃ cittaṃ nirālambamanuttaram |",
    "707:11": "śāntaṃ śuddhaṃ nirābhāsaṃ vittiḥ prajñeti kīrttitā ||5||",
    "707:12": "praveśaśca bhavedasya vidhyaṣṭamanasāṃ tataḥ |",
    "707:13": "nānādharmmādupāyo&#39;",
    "707:14": "tra mṛdumadhyādimātrataḥ ||6||",
    "707:15": "karmmasamayamudrābhyāṃ cakraṃ niṣpādya bhāvataḥ |",
    "707:16": "dhyāyanti mṛdavo bodhiṃ śuddhatattvabahirmukhāḥ ||7||",
    "707:17": "jñānamudrāsamāpannaṃ mañjuvajrādināyakam |",
    "707:18": "na satyaṃ na mṛṣākāraṃ ātmānaṃ madhyayoginaḥ ||8||",
    "707:19": "svādhiṣṭhānapadaṃ jñātuṃ ye śaktāḥ tattvato nahi |",
    "707:20": "mārgopadeśitasteṣāṃ kramato bodhisiddhaye ||9||",
    "707:21": "devatābhiniveśaścedvāsanā&#39;",
    "707:22": "tra kathaṃ nahi |",
    "707:23": "vāsanaiva viśuddhā cet sarvvatraiva tu sā tathā ||10||",
    "707:24": "dṛṣṭatattvaḥ punaryogī mahāmudrāparāyaṇaḥ |",
    "707:25": "sarvvabhāvasvabhāvena viharet uttamendriyaḥ ||11||",
    "707:26": "prakṛtau yat śubhaṃ labdhaṃ sarvvasaṅkalpavarjjitam |",
    "707:27": "tadevedaṃ jagad yasmāt tasmāt sarvvamanāvilam ||12||",
    "707:28": "bāhyaṃ vastu manogrāhyaṃ bhrāntaṃ na bhāsate yataḥ |",
    "707:29": "svapnāṅganeva viṣpaṣṭaṃ cinmātramarthakāri tat ||13||",
    "707:30": "cittamātraṃ bhaved bodhermataṃ cittamacittakam |",
    "707:31": "svasaṃvittiracittaṃ ca vittirgurumapekṣate ||14||",
    "707:32": "śūnyatā sarvvavastūnāṃ kasya nāma na sammatā |",
    "707:33": "sarvvabhāvasvabhāvo&#39;",
    "707:34": "sau kaṣṭā pratyātmavedyataḥ ||15||",
    "707:35": "anilādisahāyena bhaktaṃ yatheha taṇḍulāḥ |",
    "707:36": "tathatāyā tathā śuddhā avidyā yāti vidyatām ||16||",
    "707:37": "yasya cintā bhaved dhyānaṃ tasyācintyaṃ bhavet na kim |",
    "707:38": "acintātmā bhaved yogī buddherjjagadudāhṛtaḥ ||17||",
    "707:39": "cakramasau bhaved yogī mahāmudrā sa eva hi |",
    "707:40": "dharmmasambhoganirmmāṇāḥ sarvvākāraḥ sa eva hi ||18||",
    "707:41": "kṛtakṛtyo nirāśaśca sarvvāsaṅgavahirmmukhaḥ |",
    "707:42": "caturīryyāpathairyukto buddho&#39;",
    "707:43": "yaṃ buddhasammataḥ ||19||",
    "707:44": "advayena dvayaṃ (saṃ)",
    "707:45": "kṛtvā yadasādi śubhaṃ mayā |",
    "707:46": "jagadadvayamadyaiva bhṛyāt tena mahāsukham ||20||",
    "707:47": "||tattvaviṃśikā samāptā ||"
}