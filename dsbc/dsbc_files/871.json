{
    "871:0": "Nāmāṣṭaśatakaya",
    "871:1": "namaḥ śākyasiṃhāya",
    "871:2": "1. sambuddha puṇḍarīkākṣa sarvajña karuṇāspadam",
    "871:3": "samantabhadra śāstāra śākyasiṃham namāmy aham|",
    "871:4": "2. śrīghana śrīmati śreṣṭha śīlarāśi śivaṅkaram",
    "871:5": "śrīmanta śrīkara śānta śāntaveśa namāmy aham|",
    "871:6": "3. nairātmyavādina siddha niravadya nirāśravam",
    "871:7": "nītijña nirmalātmāna niṣkalaṅkam namāy aham|",
    "871:8": "4. nirvāda nirahaṅkāra nirvikalpa tathāgatām",
    "871:9": "nirdhūtanikhilakleśa niṣprapañca namāmy aham|",
    "871:10": "5. viśveśvara vimuktijña viśvarūpa vināyakam",
    "871:11": "viśvalakṣaṇasampūrṇa vītarāga namāmy aham|",
    "871:12": "6. vidyācaraṇasampanna viśveśa vimalaprabham",
    "871:13": "vinītaveśa vipula vītadoṣa namāmy aham|",
    "871:14": "7. durdāntadamaka sarvya śuddha śauddhodani munim",
    "871:15": "sugata sugati saumya śubhrakīrtti namāmy aham|",
    "871:16": "8. yogīśvara daśabala lokajña lokapūjitam",
    "871:17": "lokācāryya nirācāryya lokanātha namāmy aham|",
    "871:18": "9. kalaṅkamukta kāmārim akalaṅka kalādharam",
    "871:19": "kāntamūrtti dayāpātra kanakābha namāmy aham|",
    "871:20": "10. paramārttha parajyoti parama parameśvaram",
    "871:21": "bhavābhavakara bhavya bhagavanta namāmy aham|",
    "871:22": "11. mahāmati mahāvīryya mahābhijña mahābalam",
    "871:23": "mahodyama mahādhairyya mahābāhu namāmy aham|",
    "871:24": "12. ādya pavitra sarvīyam aparājitam acyutam",
    "871:25": "mita parahita nātham amitābha namāmy aham|",
    "871:26": "13| catur-mārārivijita tatvajña śaṅkara śivam",
    "871:27": "satvasāra sadācāra sārtthavāha namāmy aham|",
    "871:28": "14. devadeva mahādeva devavanditam avyayam",
    "871:29": "pramāṇātītadeveśa divyarūpa namāmy aham|",
    "871:30": "15. jitendriya jitakleśa jinendra puruṣottamam",
    "871:31": "uttama sattama brāhma puṇyakṣetra namāmy aham|",
    "871:32": "16. bhaktyeda yaḥ paṭhen nitya prātar utthāya mānavaḥ",
    "871:33": "nāmāṣṭaśataka puṇya pavitra pāpanāśanam,",
    "871:34": "17. sa labhetamitān bhogān bhaumān svargodbhvās tathā",
    "871:35": "vyādhayas ta na bādhante duḥsvapna tasya naśyati|",
    "871:36": "18. āyurārogyasampannas sarvaiśvaryyasamanvitaḥ",
    "871:37": "medhāvī kulajo vāgmī bhavej janmani janmani|",
    "871:38": "nāmāṣṭaśatakaya nimi|"
}