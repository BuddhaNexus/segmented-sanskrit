{
    "876:0": "śākyasiṃhastotram",
    "876:1": "śaṅkarakṛtam",
    "876:2": "namāmi saugataṃ jinaṃ lasadvitānabhāsuraṃ",
    "876:3": "sahasrasūryarociṣaṃ śaśāṅkakoṭinirmalam |",
    "876:4": "saromakūpamaṇḍalād galatsusūkṣmatejasaṃ",
    "876:5": "sahasranemicakritāṅaghripadmapāṇiśobhitam || 1 ||",
    "876:6": "bhajāmi lokanāyakaṃ saśokaroganāśakaṃ",
    "876:7": "jarāvipadbhayāntakaṃ bhavārṇavapratārakam |",
    "876:8": "prabuddhapaṅkajāsanaṃ vibuddhabodhikānanaṃ",
    "876:9": "trilokalokabhāvanaṃ jagattrayaikapāvanam || 2 ||",
    "876:10": "namo'stu pālabhuṃ jagaccakāra janma mānavaṃ",
    "876:11": "viśuddhaśākyasāgare payonidhau śaśī yathā |",
    "876:12": "kathāsudhāmayo'dhunā vinodayiṣyate bhavān",
    "876:13": "trijālamohatāmasaṃ vināśayiṣyase jvalan || 3 ||",
    "876:14": "sthitāya bodhimaṇḍape hitāya lokasaṃcayaṃ",
    "876:15": "jitāya mārasainyakaṃ śritāya sattṛṇāsanam |",
    "876:16": "sujātaśākyabhūpateryutāya pāramārthakai-",
    "876:17": "rvṛtāya bodhisaṃvarairnamo'stu dharmarāja te || 4 ||",
    "876:18": "bhajāmi bhavyabhāvukaṃ bhavasya bhāvabhedakaṃ",
    "876:19": "subodhivaibhavodbhavaṃ subhādrikaṃ śubhāṃśikam |",
    "876:20": "bhavaughabhārabhedituṃ babhāra bodhibhārakaṃ",
    "876:21": "subhadrabhānubhāsvaraṃ subhāvitaṃ śubhāvaham || 5 ||",
    "876:22": "jinendramūlamaṇḍape lasadvitānavistṛte",
    "876:23": "sahasrakalpapādape prapūrṇavatpraśobhite |",
    "876:24": "hiraṇyaratnavedikākuśāsanasthitaṃ vibhuṃ",
    "876:25": "namāmi śākyasaugataṃ tathāgataṃ varaṃ sadā || 6 ||",
    "876:26": "paṭhanti ye jināgrato vinirmitaṃ hareṇa tat",
    "876:27": "supañcapañcacāmaraṃ trikālameva maṅgalam |",
    "876:28": "sukīrtidharmasaṃyutaṃ lasanti sapta vṛddhayo",
    "876:29": "vrajanti te sukhāvatīṃ sukhena satsukhāvatīm || 7 ||",
    "876:30": "śaṅkarakṛtaṃ śrīśākyasiṃhastotraṃ samāptam |"
}