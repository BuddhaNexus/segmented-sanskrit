{
    "623:0": "32",
    "623:1": "297. dānena pretagati chindati bodhisattvo",
    "623:2": "dāridrakaṃ ca chinatī tatha sarvakleśān|",
    "623:3": "bhogāṃścanantavipulāṃ labhate caranto",
    "623:4": "dānena sattva paripācayi kṛcchraprāptān||1||",
    "623:5": "298. śīlena tīryagati varjayi nekarupā-",
    "623:6": "maṣṭau ca akṣaṇa kṣaṇāṃ labhate sa nityam|",
    "623:7": "kṣāntīya rupa labhate paramaṃ udāraṃ",
    "623:8": "suvarṇacchavi priyu jagasya udīkṣaṇīyo||2||",
    "623:9": "299. vīryeṇa śuklaguṇa hāni na abhyupaiti",
    "623:10": "jñānaṃ ananta labhate jinakośagañjam|",
    "623:11": "dhyānena kāmaguṇa utsṛjate jugupsyān",
    "623:12": "vidyā abhijña abhinirharate samādhim||3||",
    "623:13": "300. prajñāya dharmaprakṛtī parijānayitvā",
    "623:14": "traidhātukānta samatikramate apāyān|",
    "623:15": "vartitva cakraratanaṃ puruṣarṣabhāṇāṃ",
    "623:16": "deśeti dharma jagatī dukhasaṃkṣayāye||4||",
    "623:17": "301. paripūrayitva imi dharma sa bodhisattvo",
    "623:18": "api kṣetraśuddhi parigṛhṇati sattvaśuddhim|",
    "623:19": "api buddhavaṃśa parigṛhṇati dharmavaṃśaṃ",
    "623:20": "tatha saṃghavaṃśa parigṛhṇati sarvadharmān||5||",
    "623:21": "302. vaidyottamo jagati rogacikitsakārī",
    "623:22": "prajñopadeśa kathito ayu bodhimārgo|",
    "623:23": "nāmena ratnaguṇasaṃcaya bodhimārgaḥ",
    "623:24": "taṃ sarvasattva itu mārgatu prāpnuvanti||6||",
    "623:25": "bhagavatyāṃ ratnaguṇasaṃcayagāthāyāṃ parīndanāparivarto nāma dvātriṃśatimaḥ||",
    "623:26": "[ācāryaharibhadrakṛtā praśastiḥ|]",
    "623:27": "lokaṃ prāpayituṃ sukhena padavīṃ saṃpaddūyāvāhinīṃ",
    "623:28": "kāruṇyāhitacetasā bhagavatā buddhena saṃdīpitam|",
    "623:29": "śrutvā te'khiladharmatattvanilayaṃ sūtraṃ samādānato",
    "623:30": "gatvā sthānamaharniśaṃ nijamalaṃ dhmāyantu ye'bhyāgatāḥ||1||",
    "623:31": "kāle'smin bahudṛṣṭisaṃkulakalau pāṭhe'pi dūraṃ gate",
    "623:32": "gāthābhedamanekapustakagataṃ dṛṣṭvādhunā nyāyataḥ|",
    "623:33": "kūpaṃ vādigajendrakumbhadaraṇe bhadreṇa yā śodhitā",
    "623:34": "lokārthaṃ hariṇā mayā suvihitā seyaṃ budhairgṛhyatām||2||",
    "623:35": "āryāṣṭasāhasrikāyā bhagavatyāḥ prajñāpāramitāyāḥ parivartānusāreṇa bhagavatī ratnaguṇasaṃcayagāthā samāptā||",
    "623:36": "ye dharmā hetuprabhavā hetuṃ teṣāṃ tathāgato hyavadat|",
    "623:37": "teṣāṃ ca yo nirodha evaṃ vādī mahāśramaṇaḥ||",
    "623:38": "[lekhakapraśastiḥ|]",
    "623:39": "yo'sau dharmaṃ sugatagaditaṃ paṭhate bhaktibhāvā-",
    "623:40": "nmātrāhīnaṃ kathamapi padaṃ pādagāthākṣaraṃ vā|",
    "623:41": "jihvādoṣaiḥ pavanacaritaiḥ śleṣmadoṣapracārai-",
    "623:42": "ryūyaṃ buddhāḥ subhavanagatā bodhisattvāḥ kṣamadhvam||",
    "623:43": "samāptam| śubham||"
}