{
    "794:0": "daśākuśalakarmapathadeśanā",
    "794:1": "namo ratnatrayāya",
    "794:2": "kenacit sugatiprāptukāmena heyā daśākuśalakarmapathāḥ prakṛtisāvadyāḥ, tadyathā-",
    "794:3": "“trividhaṃ kāyikaṃ karma vācikaṃ tu caturvidham|",
    "794:4": "mānasaṃ triprakāraṃ ca daśaite'kuśalā matāḥ||1||",
    "794:5": "ete pravibhāgaśaḥ vyākhyāyante-tatra tāvat kāyikam-prāṇātipātaḥ,",
    "794:6": "adattādānam,",
    "794:7": "kāmamithyācāraśceti|",
    "794:8": "vācikam- mṛṣāvādaḥ,",
    "794:9": "paiśunyam,",
    "794:10": "pāruṣyam,",
    "794:11": "saṃbhinnapralāpaśca|",
    "794:12": "mānasañca- abhidhyā,",
    "794:13": "vyāpādo,",
    "794:14": "mithyādṛṣṭiśca|",
    "794:15": "tatra prāṇātipātastu prāṇibhāvaḥ,",
    "794:16": "prāṇisaṃjñābhāvaḥ,",
    "794:17": "vadhakacittopasthitiḥ,",
    "794:18": "etadupāyakaraṇam,",
    "794:19": "prāṇāvarodhabhāvaśceti etatpañcāṅgaiḥ saṃyukto bhavati prāṇātipātaḥ|",
    "794:20": "tatra katamat adattādānam?",
    "794:21": "parabhāvaḥ,",
    "794:22": "paraparigrahasaṃjñatvam ca,",
    "794:23": "steyacittopasthitiḥ,",
    "794:24": "tadupāyakaraṇam,",
    "794:25": "sthānacyutiśca etatpañcāṅgasaṃyuktaṃ bhavatyadattādānam|",
    "794:26": "kāmamithyācārastu caturvidhaḥ|",
    "794:27": "asthānam, akālaḥ,",
    "794:28": "adeśaḥ,",
    "794:29": "agamyaśceti|",
    "794:30": "tatra asthānaṃ tu saddharma-pratimādi-bodhisattvasthānācāryopādhyāyadakṣiṇīya- mātā-pitṛ-gurvādisaṃnidhiḥ|",
    "794:31": "akāla iti divase ṛtumatī-garbhiṇī-śiśupoṣiṇībhiḥ anicchāduḥkhadaurmanasyapīḍitābhiḥ,",
    "794:32": "aṣṭāṅgoposathāvasthitau ca|",
    "794:33": "adeśa iti mukhavarcomārgatvaṃ,",
    "794:34": "kumārakanyayoḥ puraḥpṛṣṭharandhratvaṃ svagastatvaṃ ca|",
    "794:35": "agamyāstu sarvāḥ parastriyaḥ dharma-dhvaja-kula-rakṣitāḥ,",
    "794:36": "rājarakṣitāḥ,",
    "794:37": "paraparigṛhītā veśyāḥ,",
    "794:38": "sambandhinyaḥ,",
    "794:39": "tiraścyaśca|",
    "794:40": "evaṃ svabhāryāsevane'pi bhavati kāmamithyācāraḥ|",
    "794:41": "tatra mṛṣāvādastu avāstavikatvam,",
    "794:42": "vastusthiticyutiḥ,",
    "794:43": "mithyāsaṃjñābhāvaḥ,",
    "794:44": "mithyopāyopasthitiśca,",
    "794:45": "tadupāyakaraṇanceti mithyāvacanoktiśca ityetat pañcāṅgasaṃyoge mṛṣāvādaḥ|",
    "794:46": "paiśunyaṃ tu kliṣṭacittena parabhedakathanam|",
    "794:47": "pāruṣyamiti paramarmavedhi dveṣavacanam|",
    "794:48": "sambhinnapralāpa iti-rāgopayuktatvād āsaktiyogād vā avācyavacanam|",
    "794:49": "abhidhyeti paradhana-dravyaiśvaryeṣu tīvrāsaktacittatā|",
    "794:50": "vyāpādastu sattveṣu vidveṣabhāvaḥ,",
    "794:51": "etān sattvān haniṣyāmi rotsyāmi,",
    "794:52": "tāḍayiṣyāmi,",
    "794:53": "bandhayiṣyāmi iti cintanam|",
    "794:54": "mithyādṛṣṭiriti nāsti dānam,",
    "794:55": "na yajñaṃ,",
    "794:56": "nehalokaḥ,",
    "794:57": "na paralokaḥ,",
    "794:58": "na śramaṇaḥ,",
    "794:59": "na brāhmaṇaḥ,",
    "794:60": "na devaḥ,",
    "794:61": "na buddho bhagavān,",
    "794:62": "na arhan,",
    "794:63": "na pratyekabuddhaḥ,",
    "794:64": "na sucaritam na ca duścaritam,",
    "794:65": "na sukṛta-duṣkṛta-karmāṇāṃ phalavipākaśceti|",
    "794:66": "bhagavatā ukte 'āryasaddharmasmṛtyupasthāne' mahāyānasūtre ca nirdiṣṭo daśākuśalakarmapatho'yaṃ tu mahānarakahetuḥ|",
    "794:67": "daśākuśalakarmapathasevanena patanti sattvā narakeṣu|",
    "794:68": "mahācāryadīpaṅkaraśrījñānapādena praṇītā daśākuśalakarmapathadeśanā samāptā|",
    "794:69": "tenaiva bhāratīyopādhyāyena mahāsaṃśodhakalokakṣuṣā bhikṣu-jayaśīlena cānūditaḥ sampāditaśca||"
}