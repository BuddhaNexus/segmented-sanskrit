{
  "S04n299:0": "3 prabhākarī nāma tṛtīyā bhūmiḥ |",
  "S04n299:1": "upakramagāthāḥ |",
  "S04n299:2": "evaṃ śruṇitva caribhūmimuttamāṃ",
  "S04n299:3": "bodhisattvaviṣaye acintiyām |",
  "S04n299:4": "harṣita jinasutāḥ sagauravāḥ",
  "S04n299:5": "puṣpamegha nabhataḥ pramuñciṣuḥ || 1 ||",
  "S04n299:6": "sādhu sādhu girisārasākaya (?)",
  "S04n299:7": "deśito viduna śīlasaṃvaraḥ |",
  "S04n299:8": "sarvasattvakaruṇāya āśayo",
  "S04n299:9": "bhūmiśreṣṭha dvitiyāya gocaraḥ || 2 ||",
  "S04n299:10": "bhūtatattva vitathāmananyathā",
  "S04n299:11": "bodhisasattvacaraṇaṃ manoramam |",
  "S04n299:12": "sarvalokahitaśaukhyacintanā",
  "S04n299:13": "deśitaṃ tu paramaprabhāsvaram || 3 ||",
  "S04n299:14": "bhūyu bhūyu naradevapūjitāṃ",
  "S04n299:15": "bhūmiśreṣṭha tṛtiyāmudāhara |",
  "S04n299:16": "dharmajñānakriyamukti sūcaya",
  "S04n299:17": "yādṛśo'nubhava tādṛ(śo) gocaraḥ || 4 ||",
  "S04n299:18": "dānaśīlacaraṇaṃ maharṣiṇāṃ",
  "S04n299:19": "kṣāntivīryaśamaprajñupāyatām |",
  "S04n299:20": "maitraśreṣṭha karuṇāya mārgaṇaṃ",
  "S04n299:21": "bhāṣadhvaṃ jinacarīviśodhanam || 5 ||",
  "S04n299:22": "vimukticandra uvāca vajragarbhaviśāradam |",
  "S04n299:23": "tṛtīyā saṃkramantānāmāśayaṃ bhaṇa sūraṇa || 6 ||",
  "S04n299:24": "upasaṃhāragāthāḥ |",
  "S04n299:25": "te śuddhaāśaya guṇākara tīkṣṇacittā",
  "S04n299:26": "nirviṇṇa rāgavigatā anivartiyāśca |",
  "S04n299:27": "dṛḍhacitta taptadhṛtiyukti udāravegā",
  "S04n299:28": "māhātmyatāśayavidū tṛtiyākramanti || 7 ||",
  "S04n299:29": "atra sthitā vidu prabhākaribhūmideśe",
  "S04n299:30": "duḥkhaṃ anityamaśuciṃ ca pralopadharmam |",
  "S04n299:31": "acirasthitāka kṣaṇikaṃ ca nirodhakaṃ ca",
  "S04n299:32": "vicinanti saṃskṛtagatīkamanāgatīkam || 8 ||",
  "S04n299:33": "te rogabhūtasahaśokaparadevanaṃ ca",
  "S04n299:34": "sopāyasaṃ ca priya apriyatānubaddham |",
  "S04n299:35": "duḥkhadaurmanasyanilayaṃ jvalitāgnikalpaṃ",
  "S04n299:36": "paśyanti saṃskṛtamananta samujjvalanti || 9 ||",
  "S04n299:37": "udvigna sarva tribhave anapekṣacittā",
  "S04n299:38": "jñānābhilāṣa sugatānamananyabuddhiḥ |",
  "S04n299:39": "avicintiyaṃ atuliyaṃ asamantapāraṃ",
  "S04n299:40": "saṃpaśyate nirupatāpa jināna jñānam || 10 ||",
  "S04n299:41": "te buddhajñāna nirupadravamīkṣamāṇā",
  "S04n299:42": "atrāṇa nātharahitā vrajate caranti |",
  "S04n299:43": "nityaṃ daridra tribhiragnibhi saṃpradīptā",
  "S04n299:44": "bhavacārake dukhaśatairvinibaddhacittāḥ || 11 ||",
  "S04n299:45": "kleśāvṛtāśca avilokana chandahīnāḥ",
  "S04n299:46": "sugatāna dharmaratanānupranaṣṭa bālāḥ |",
  "S04n299:47": "saṃsārasrotaanuvāhina mokṣatrastā",
  "S04n299:48": "me trāyitavya dṛḍha vīrya samārabhante || 12 ||",
  "S04n299:49": "jñānābhilāṣa anapekṣa jagārthacārī",
  "S04n299:50": "vyuparīkṣate katama hetu jagasya mokṣe |",
  "S04n299:51": "nānyatra nāvaraṇajñāna tathāgatānāṃ",
  "S04n299:52": "jñānaṃ ca prajñaprabhavaṃ sugatānanantam || 13 ||",
  "S04n299:53": "prajñā śrutāttu iti cintayi bodhisattvo",
  "S04n299:54": "jñātvā tamārabhati vīrya śrutārthacārī |",
  "S04n299:55": "rātriṃdivaṃ śravaṇahetu ananyakarmā",
  "S04n299:56": "arthārthiko bhavati dharmaparāyaṇaśca || 14 ||",
  "S04n299:57": "maṇimuktiratnanilayān priyabāndhavāṃśca",
  "S04n299:58": "rājyaṃ ananta vividhān pura sthānaśreṣṭhān |",
  "S04n299:59": "bhāryāsutāṃśca parivāra manonukūlān",
  "S04n299:60": "anapekṣacittu tyajate vidu dharmahetoḥ || 15 ||",
  "S04n299:61": "śira hastapāda nayana svakamātmamāṃsaṃ",
  "S04n299:62": "jihvā ca daṃṣṭra śrava nāsika śoṇitaṃ ca |",
  "S04n299:63": "hṛdayaṃ tupādya priya majja parityajanti",
  "S04n299:64": "nā duṣkaretamatha duṣkara yacchṛṇoti || 16 ||",
  "S04n299:65": "yadi kaścidenamupagamya vadeyya evaṃ",
  "S04n299:66": "yadi agnigarbha prapate jvalitāpi ghoram |",
  "S04n299:67": "prāpiṣya dharmaratanaṃ sugatopanītaṃ",
  "S04n299:68": "śrutvā adīnamanasaḥ prapate guṇārthī || 17 ||",
  "S04n299:69": "ekasya dharmapada artha sumerumūrdhnā",
  "S04n299:70": "trisahasra agnirucitaṃ api brahmalokāt |",
  "S04n299:71": "sūdūrlabhā imi jinasya udārabodhiḥ",
  "S04n299:72": "ye mānuṣyeṇa sukha labhyati evarūpam || 18 ||",
  "S04n299:73": "yāvattareṇa pavararṣiṇa jñānalābha-",
  "S04n299:74": "stāvattaraṃ dukhamavīcikamutsahyami |",
  "S04n299:75": "kiṃ vā punarvividhamānuṣaduḥkhaskandhaṃ",
  "S04n299:76": "hantābhyupemi varadharmipadārthiduḥkham || 19 ||",
  "S04n299:77": "dharmaṃ ca śrutva puna yoniṣu cintayāti",
  "S04n299:78": "dhyānāpramāṇa caturaśca tathā arūpyā |",
  "S04n299:79": "pañcāpyabhijña pravarā abhinirharanti",
  "S04n299:80": "nā cāpi teṣu vaśitā upapadya yāti || 20 ||",
  "S04n299:81": "atra sthitā guṇadharā bahubuddhakoṭyaḥ",
  "S04n299:82": "pūjyanti niścitamanā śṛṇuvanti dharmam |",
  "S04n299:83": "tanubhūtva mithyapagatāḥ pariśuddhayanti",
  "S04n299:84": "svarṇe yathā vigatadoṣa pramāṇatulyam || 21 ||",
  "S04n299:85": "atra sthitā guṇadharāstridaśādhipatyaṃ",
  "S04n299:86": "kārenti īśvara nivartitu kāmarāgāḥ |",
  "S04n299:87": "marusaṃgha nekavividhān kuśalāna mārge",
  "S04n299:88": "sthāpentyananyamana buddhaguṇābhilāṣe || 22 ||",
  "S04n299:89": "atra sthitā jinasutā viriyārabhante",
  "S04n299:90": "labdhvā samādhina sahasraśataṃ anūnam |",
  "S04n299:91": "paśyanti buddhavara lakṣaṇacitrigātrāṃ",
  "S04n299:92": "bhūyo ataḥ praṇidhiśreṣṭha guṇāpramāṇāḥ || 23 ||",
  "S04n299:93": "ityeṣā tṛtiyā bhūminirdiṣṭā sugatātmajāḥ |",
  "S04n299:94": "sarvalokahitaiṣīṇāṃ bodhisattvānanuttamā || 24 ||"
}