{
  "SA05n861:0": "pañcarakṣādevīstotrāṇi",
  "SA05n861:1": "1 mahāpratisarāstotram",
  "SA05n861:2": "om namaḥ śrīmahāpratisarāyai",
  "SA05n861:3": "tathāgatādyāstathatāṃ tattvamāpurmahattaram |",
  "SA05n861:4": "dhāraṇīdhāraṇādyasyāḥ pratisarāṃ namāmi tām || 1 ||",
  "SA05n861:5": "raṇe śakro'jayaddaityān dhāraṇīdhvajadhṛg bahūn |",
  "SA05n861:6": "saṃgrāmajayadāṃ bhīmāṃ pratisarāṃ namāmi tām || 2 ||",
  "SA05n861:7": "yatprabhāvād brahmadatto'labhad rājyamakaṇṭakam |",
  "SA05n861:8": "sārvabhaumapradāṃ devīṃ pratisarāṃ namāmi tām || 3 ||",
  "SA05n861:9": "bahvaparādho'pi yadbhakto rājyādhikāramāptavān |",
  "SA05n861:10": "śastrādibhītisaṃhatrīṃ pratisarāṃ namāmi tām || 4 ||",
  "SA05n861:11": "ratnānyavāpurvaṇijo yāṃ smṛtvodadhinirgatāḥ |",
  "SA05n861:12": "sarvabādhāpraśamanīṃ pratisarāṃ namāmi tām || 5 ||",
  "SA05n861:13": "śrīmahāpratisarārakṣādevīstotraṃ samāptam |",
  "SA05n861:14": "2 mahāmantrānusāriṇīstotram",
  "SA05n861:15": "om namaḥ śrīmahāmantrānusāriṇyai",
  "SA05n861:16": "buddhādhiṣṭhānato buddhābhayadāṃ bhayanāśinīm |",
  "SA05n861:17": "bhavāmbudhinimagnānāṃ namo mantrānusāriṇīm || 1 ||",
  "SA05n861:18": "yanmantroccāraṇādeva ṣaḍītayaḥ sudāruṇāḥ |",
  "SA05n861:19": "nāśaṃ prayānti varadāṃ namo mantrāmusāriṇīm || 2 ||",
  "SA05n861:20": "mantrānusāriṇo lokān nānye mantrādayo grahāḥ |",
  "SA05n861:21": "pīḍayanti priyāṃścāpi namo mantrānusāriṇīm || 3 ||",
  "SA05n861:22": "buddho'bhyabhāṣad gāthāstā yanmantrakathanāntaram |",
  "SA05n861:23": "yābhiḥ sarvatra svasti syānnamo mantrānusāriṇīm || 4 ||",
  "SA05n861:24": "kalau buddhavihīne'smin lokānāṃ hitamācaret |",
  "SA05n861:25": "pāpotpātapraśamanīṃ namo mantrānusāriṇīm || 5 ||",
  "SA05n861:26": "śrīmahāmantrānusāriṇīstotraṃ samāptam |",
  "SA05n861:27": "3 mahāmāyūrīstotram",
  "SA05n861:28": "om namaḥ śrīmahāmāyūrīryai",
  "SA05n861:29": "duṣṭaṃ kṛṣṇabhujaṅgaṃ ca naraḥ svāntikaṃ pālayet |",
  "SA05n861:30": "yasyā mantrānubhāvena māyūrīṃ praṇamāmi tām || 1 ||",
  "SA05n861:31": "brahmādayo lokapālā yaddhāraṇyā samāpnuvan |",
  "SA05n861:32": "svāni svānyadhikārāṇi māyūrīṃ praṇamāmi tām || 2 ||",
  "SA05n861:33": "svarṇāvabhāsaṃ śikhinaṃ nālabhajjapinaṃ kudhīḥ |",
  "SA05n861:34": "amoghenāpi pāśena māyūrīṃ praṇamāmi tām || 3 ||",
  "SA05n861:35": "yanmantrajapato jīvāḥ prājīvañchuṣkapādapāḥ |",
  "SA05n861:36": "mṛtasaṃjīvinīṃ devīṃ māyūrīṃ praṇamāmi tām || 4 ||",
  "SA05n861:37": "yanmantrisaṅgāt pavano mahopadravaśāntikṛt |",
  "SA05n861:38": "buddhānāṃ bodhidāṃ nityaṃ māyūrīṃ praṇamāmi tām || 5 ||",
  "SA05n861:39": "śrīmahāmāyūrīrakṣādevīstotraṃ samāptam |",
  "SA05n861:40": "4 mahāśītavatīrakṣādevīstotram",
  "SA05n861:41": "om namo mahāśītavatyai",
  "SA05n861:42": "yaddhāraṇīmanujapan rāhulo bhadramāptavān |",
  "SA05n861:43": "viheṭhito grahaiḥ sarvaiḥ śītavatīṃ namāmyaham || 1 ||",
  "SA05n861:44": "pāpatāpe śītakarīṃ śītalādyupasargataḥ |",
  "SA05n861:45": "śītoṣṇaduḥkhaśamanīṃ śītavatīṃ namāmyaham || 2 ||",
  "SA05n861:46": "mantragranthitasūtrāṇāṃ dhāraṇāllakṣayojanam |",
  "SA05n861:47": "pathikānāṃ pālayitrīṃ śītavatīṃ namāmyaham || 3 ||",
  "SA05n861:48": "śmaśānasthena muninā yā samuccāritā purā |",
  "SA05n861:49": "grahopadravaśāntyarthaṃ śītavatīṃ namāmyaham || 4 ||",
  "SA05n861:50": "grahābhibhūtavātānāṃ granthipadavidhāriṇām |",
  "SA05n861:51": "grahabhītipraśamanīṃ śītavatīṃ namāmyaham || 5 ||",
  "SA05n861:52": "śrī mahāśītavatīrakṣādevīstotraṃ samāptam |",
  "SA05n861:53": "5 mahāsāhasrapramardinīstotram",
  "SA05n861:54": "om namaḥ śrīmahāsāhasrapramardinye",
  "SA05n861:55": "mahāsāhasrike loke sāhasrahitakāriṇām |",
  "SA05n861:56": "sahasrasattvajananīṃ naumi sāhasramardinīm || 1 ||",
  "SA05n861:57": "sopadravāyāṃ vaiśālyāṃ mahotsavo yataḥ sadā |",
  "SA05n861:58": "mahopasargaśamanīṃ naumi sāhasramardinīm || 2 ||",
  "SA05n861:59": "yakṣarākṣasabhūtānāṃ damanīṃ duṣṭacetasām |",
  "SA05n861:60": "duritopadravahatāṃ naumi sāhasramardinīm || 3 ||",
  "SA05n861:61": "yaddhāraṇīpaṭhanato rakṣitaḥ śākyakeśarī |",
  "SA05n861:62": "viṣato viṣadigdhāṃ tāṃ naumi sāhasramardinīm || 4 ||",
  "SA05n861:63": "madhumiśritabhaiṣajyaṃ sarvaroganivāraṇam |",
  "SA05n861:64": "mṛtasañjīvanaṃ loke naumi sāhasramardinīm || 5 ||",
  "SA05n861:65": "śrīmahāsāhasramardinīrakṣādevīstotraṃ samāptam |"
}