{
    "832:0": "daśabhūmīśvaro nāma mahāyānasūtraratnarājastotram",
    "832:1": "śamadamaniratānāṃ śāntadāntāśayānāṃ",
    "832:2": "khagapathasadṛśānāmantarīkṣasamānām|",
    "832:3": "khilamalavidhutanāṃ mārgajñānasthitānāṃ",
    "832:4": "śṛṇuta varaviśeṣaṃ bodhisattvāṃśca śreṣṭhān|| 1||",
    "832:5": "kuśalasatasahasraṃ saṃcitaṃ kalpakoṭayā",
    "832:6": "subuddhaśatasahasraṃ pūjayitvā gṛhītam|",
    "832:7": "pratyekajinavarānvai pūjayitvā tvanantān",
    "832:8": "sakalajagahitāya jāyate bodhicittam|| 2||",
    "832:9": "uta tapatapitānāṃ kṣāntipāraṃgatānāṃ",
    "832:10": "hṛtaśritacaritānāṃ puṇyajñānodgatānām|",
    "832:11": "vipulagatimatīnāṃ puṇyajñānāśayānāṃ",
    "832:12": "daśabalasamatulyaṃ jāyate bodhicittam|| 3||",
    "832:13": "pramuditasumatīnāṃ dānadharme ratānāṃ",
    "832:14": "sakalajagahitārthaṃ nityamevodyatānām|",
    "832:15": "jinaguṇaniratānāṃ sattvarakṣāvratānāṃ",
    "832:16": "tribhuvanahitakartṛ jāyate bodhicittam|| 4||",
    "832:17": "akuśalaviratānāṃ śuddhamārge sthitānāṃ",
    "832:18": "vrataniyamaratānāṃ śāntasaumyendriyāṇām|",
    "832:19": "jinaśaraṇagatānāṃ bodhicaryāśayānāṃ",
    "832:20": "tribhuvanahitasādhyaṃ jāyate bodhicittam|| 5||",
    "832:21": "anugatakuśalānāṃ kṣāntisvārasyabhājāṃ",
    "832:22": "viditaguṇarasānāṃ tyaktamānotsavānām|",
    "832:23": "nihitaśubhamatīnāṃ dānasaumyāśayānāṃ",
    "832:24": "sakalahitavidhānaṃ jāyate bodhicittam|| 6||",
    "832:25": "pracalati śubhakārye dhīravīryāḥ sahāyā",
    "832:26": "nikhilajanahitārthaṃ prodyate mānasiṃhaḥ|",
    "832:27": "avirataguṇasādhyā nirjitakleśasaṃdhā",
    "832:28": "jhaṭiti manasi teṣāṃ jāyate bodhicittam|| 7||",
    "832:29": "susamavahitacittā dhvastamohāndhakārā",
    "832:30": "vigalitamadamānā tyaktasaṃkliṣṭamārgāḥ|",
    "832:31": "samasukhaniratā ye tyaktasaṃsārasaṃgā",
    "832:32": "jhaṭiti manasi teṣāṃ jāyate bodhicittam|| 8||",
    "832:33": "vimalakhasamacittā jñānavijñānavijñā",
    "832:34": "nihatanamucimārā vāntakleśābhimānāḥ|",
    "832:35": "jinapadaśaraṇasthā labdhatattvārthakāye",
    "832:36": "sapadi manasi teṣāṃ jāyate bodhicittam|| 9||",
    "832:37": "tribhuvanaśivasādhyopāyavijñānadhīrāḥ",
    "832:38": "karibalaparihāropāyavidṛddhimantaḥ|",
    "832:39": "sugataguṇasamīhā ye ca puṇyānurāgā",
    "832:40": "sapadi manasi teṣāṃ jāyate bodhicittam|| 10||",
    "832:41": "tribhuvanahitakāmā bodhisaṃbhārapūrtyai",
    "832:42": "praṇihitamanasā ye duṣkare'pi caranti|",
    "832:43": "avirataśubhakarma prodyatāṃ bodhisattvāḥ",
    "832:44": "sapadi manasi teṣāṃ jāyate bodhicittam|| 11||",
    "832:45": "daśabalaguṇakāmā bodhicaryānuraktā",
    "832:46": "vijitakaribalaughāstyaktamānānuṣaṅgāḥ|",
    "832:47": "anugataśubhamārgā labdhadharmārthakāmā",
    "832:48": "jhaṭiti manasi teṣāṃ jāyate bodhicittam|| 12||",
    "832:49": "iti gaṇitaguṇāṃśā bodhicaryāścarantu",
    "832:50": "jinapadapraṇidhānā satsamṛddhiṃ labhantu|",
    "832:51": "tribhuvanapariśuddhā bodhicittaṃ labhantu",
    "832:52": "triśaraṇapariśuddhā bodhisattvā bhavantu|| 13||",
    "832:53": "daśapāramitāḥ pūrya daśabhūmīśvaro bhavet|",
    "832:54": "bhūyo'pi kathyate hyetacchṛṇutaivaṃ samāsataḥ|| 14||",
    "832:55": "bodhicittaṃ yadāsādya saṃpradānaṃ karoti yaḥ|",
    "832:56": "tadā pramuditāṃ prāpto jambūdvīpeśvaro bhavet|| 15||",
    "832:57": "tatrasthaḥ pālayet sattvān yathecchapratipādanaiḥ|",
    "832:58": "svayaṃ dāne pratiṣṭhitvā parāṃścāpi niyojayet|| 16||",
    "832:59": "sarvān bodhau pratiṣṭhāpya saṃpūrṇadānapāragaḥ|",
    "832:60": "etatkarmānubhāvena saṃvaraṃ samupācaret|| 17||",
    "832:61": "sampacchīlaṃ samādhāya saṃvaraṃ kuśalī bhavet|",
    "832:62": "tataḥ sa vimalāṃ prāptaścāturdvīpeśvaro bhavet|| 18||",
    "832:63": "tatrasthaḥ pālayet sattvānakuśalaṃ nivārayet|",
    "832:64": "svayaṃ śīle pratiṣṭhitvā parāṃścāpi niyojayet|| 19||",
    "832:65": "sarvān bodhau pratiṣṭhāpya sampūrṇakuśalī bhavet|",
    "832:66": "etaddharmavipākena kṣāntivratamupāśrayet|| 20||",
    "832:67": "samyak kṣāntivrataṃ dhṛtvā kṣāntibhṛt kuśalī bhavet|",
    "832:68": "tataḥ prābhākarīṃ prāptastrayastriṃśādhipo bhavet|| 21||",
    "832:69": "tatrasthaḥ pālayet satvān kleśamārganivāraṇaiḥ|",
    "832:70": "svayaṃ kṣāntivrate sthitvā parāṃścāpi niyojayet|| 22||",
    "832:71": "sattvān bodhau pratiṣṭhāpya śāntipāraṃgato bhavet|",
    "832:72": "etatpuṇyavipākena vīryabalamupāśrayet|| 23||",
    "832:73": "samyag vīryaṃ samādhāya vīryabhṛtkuśalī bhavet|",
    "832:74": "tataścārciṣmatīṃ prāpya sudhāmādhipatirbhavet|| 24||",
    "832:75": "tatrasthaḥ pālayan sarvān kudṛṣṭīḥ saṃnivārayet|",
    "832:76": "samyagdṛṣṭau pratiṣṭhāya bodhayitvā prayatnataḥ|| 25||",
    "832:77": "svayaṃ dhyānavrate sthitvā parāṃścāpi niyojayet|",
    "832:78": "sarvān bodhau pratiṣṭhāpya dhyānapāraṃgato bhavet|| 26||",
    "832:79": "etatpuṇyavipākena dhyānapāraṃ samārabhet|",
    "832:80": "sarvakleśān vinirjitya samādhisusthito bhavet|| 27||",
    "832:81": "samyagdhyānaṃ samādhāya samādhikuśalī bhavet|",
    "832:82": "tataḥ sudurjayāṃ prāptaḥ sa tuṣitādhipo bhavet|| 28||",
    "832:83": "tatrasthaḥ pālayetsattvāṃstīrthyamārganivāraṇaiḥ|",
    "832:84": "sattvadharmaṃ pratiṣṭhāpya bodhayitvā prayatnataḥ|| 29||",
    "832:85": "svayaṃ dhyānavrate sthitvā parāṃścāpi niyojayet|",
    "832:86": "sarvān bodhau pratiṣṭhāpya dhyānapāraṃgato bhavet|| 30||",
    "832:87": "etatpuṇyavipākena prajñāvratamupāśrayet|",
    "832:88": "sarvānmārān vinirjitya prajñābhijñāsamṛddhimān|| 31||",
    "832:89": "samyak prajñāṃ samādhāya svābhijñākuśalī bhavet|",
    "832:90": "tataścābhimukhīṃ prāptaḥ sunirmitādhipo bhavet|| 32||",
    "832:91": "tatrasthaḥ pālayet sattvānabhimānanivāraṇaiḥ|",
    "832:92": "śūnyatāṃ supratiṣṭhāpya bodhayitvā prayatnataḥ|| 33||",
    "832:93": "svayaṃ prajñāvrate sthitvā parāṃścāpi niyojayet|",
    "832:94": "sarvān bodhau pratiṣṭhāpya prajñāpāraṃgato bhavet|| 34||",
    "832:95": "etatpuṇyavipākaiśca samupāyavrataṃ caret|",
    "832:96": "sarvaduṣṭān vinirjitya saddharmakuśalī sudhīḥ|| 35||",
    "832:97": "samupāyavidhānena sattvān bodhau niyojayet|",
    "832:98": "tato dūraṅgamāṃ prāpto vaśavartīśvaro bhavet|| 36||",
    "832:99": "tatrasthaḥ pālayetsattvānabhisamayabodhanaiḥ|",
    "832:100": "bodhisattvaniyāmeṣu pratiṣṭhāya prabodhayet|| 37||",
    "832:101": "tatropāye svayaṃ sthitvā parāṃścāpi niyojayet|",
    "832:102": "sarvān bodhau pratiṣṭhāpya upāyapārago bhavet|| 38||",
    "832:103": "etatpuṇyānubhāvaśca supraṇidhīnupāśrayet|",
    "832:104": "mithyādṛṣṭiṃ vinirjitya samyagdṛṣṭiḥ kṛto budhaiḥ|| 39||",
    "832:105": "supratiṣṭhitacittena samyagbodhau pratiṣṭhitaḥ|",
    "832:106": "tataścāpyacalāṃ prāpto buddhayā sāhasrikādhipaḥ|| 40||",
    "832:107": "tatrasthaḥ pālayetsattvān tripānaṃ saṃpibet śanaiḥ|",
    "832:108": "lokadhātau parijñāne pratiṣṭhāpya prabodhayet|| 41||",
    "832:109": "supraṇidhau svayaṃ sthitvā parāṃścāpi niyojayen|",
    "832:110": "sarvān bodhau pratiṣṭhāpya prāṇiṣu pārago bhavet|| 42||",
    "832:111": "etatpuṇyānusāraiśca balavratamupāśrayet|",
    "832:112": "sarvaduṣṭān vinirjitya sambodhikṛtaniścayaḥ|| 43||",
    "832:113": "samyagyatnasamutsāhaiḥ sarvatīrthyān vinirjayet|",
    "832:114": "tataḥ sādhumatīṃ prāpto mahābrahmā bhavet kṛtī|| 44||",
    "832:115": "tatrasthaḥ pālayan sattvān buddhayānopadeśanaiḥ|",
    "832:116": "sattvāsamaparijñāne samyagbodhau prabodhayet|| 45||",
    "832:117": "svayaṃ bale pratiṣṭhitvā parāṃścāpi niyojayet|",
    "832:118": "sarvān bodhau pratiṣṭhāpya balapāraṃgato bhavet|| 46||",
    "832:119": "etatpuṇyavipākaiśca jñānavratamupāśrayet|",
    "832:120": "caturmārān vinirjitya bodhisattvaguṇākaraḥ|| 47||",
    "832:121": "samyagjñānaṃ samādhāya saddharmakuśalo bhavet|",
    "832:122": "dharmameghāṃ tataḥ prāpto maheśvaro bhavet kṛtī|| 48||",
    "832:123": "tatrasthaḥ pālayan sarvān sarvākārānubodhanaiḥ|",
    "832:124": "sarvākāravare jñāne pratiṣṭhāpya prabodhayet|| 49||",
    "832:125": "svayaṃ jñāne pratiṣṭhitvā parāṃścāpi niyojayet|",
    "832:126": "sarvān bodhau pratiṣṭhāpya jñānapāraṃgato bhavet|| 50||",
    "832:127": "etatpuṇyānubhāvaiśca daśabhūmīśvaro jinaḥ|",
    "832:128": "sarvākāraguṇādhāraḥ sarvajño dharmalābhavit|| 51||",
    "832:129": "iti matvā bhuvabhiśca sambuddhapadalabdhaye|",
    "832:130": "daśapāramitārūpe caritavyaṃ samāhitaiḥ|| 52||",
    "832:131": "tathā bodhiṃ śivāṃ prāpya caturmārān vinirjayet|",
    "832:132": "sarvān bodhau pratiṣṭhāpya nirvṛtiṃ samavāpsyatha|| 53||",
    "832:133": "etajjñātvā paricchāyāṃ caradhvaṃ bodhiśāsane|",
    "832:134": "nirvidhnaṃ bodhimāsādya labhadhvaṃ saugataṃ padam|| 54||",
    "832:135": "etāstā khalvāha jinaputro daśabodhisattvabhūmayaḥ samāsato nirdiṣṭāḥ sarvākāravaropetāḥ sarvajñānānugatā draṣṭavyāḥ|",
    "832:136": "tasyāṃ velāyāmayaṃ trisāhasralokadhātuṣaḍvikāraṃ prākampata vividhāni ca puṇyāni viyatto nyapatan|",
    "832:137": "divyamānuṣakāṇi ca bhūtāni saṃpravāditānyabhūvan,",
    "832:138": "anumodanāṃśagena ca yāvadakaniṣṭhabhuvanaṃ vijñaptamabhūt||",
    "832:139": "śrībodhisattvacaryāprasthānād daśabhūmīśvaro nāma",
    "832:140": "mahāyānasūtraratnarājastotraṃ samāptam|"
}