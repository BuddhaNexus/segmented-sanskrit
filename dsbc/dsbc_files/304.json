{
    "304:0": "8 acalā nāma aṣṭamī bhūmiḥ |",
    "304:1": "upakramagāthāḥ |",
    "304:2": "eva śrutva caraṇaṃ viduna śreṣṭhaṃ",
    "304:3": "devasaṃgha muditā marupatiśca |",
    "304:4": "bodhisattva bahavo jagaddhitaiṣi",
    "304:5": "pūjayanti sugataṃ jinasutāṃśca || 1 ||",
    "304:6": "puṣpamālya rucirā dhvajāpatākā",
    "304:7": "gandhacūrṇa rucirā ratanavastrā |",
    "304:8": "chatra naikarucirān maṇipratyuptān",
    "304:9": "hārameghapravarānabhisṛjanti || 2 ||",
    "304:10": "manojñaghoṣamadhuraṃ suravandū",
    "304:11": "mukta naikaturiyapravaranāṭān |",
    "304:12": "pūjanārthi jinaputra sugatāṃśca",
    "304:13": "varṇaśreṣṭha munino udāharanti || 3 ||",
    "304:14": "sarvi darśi vṛṣabhī dvipādaśreṣṭho",
    "304:15": "darśi buddhaviṣayaṃ jagaddhitārtham |",
    "304:16": "śabdamegha rucirān pratāḍamānā-",
    "304:17": "stūryatāla vividhāstada pramuktāḥ || 4 ||",
    "304:18": "vālakoṭi sugatāḥ śatasahasrā",
    "304:19": "gaṅgākoṭi nayutā rajaviśiṣṭāḥ |",
    "304:20": "kṣemamapratisamāḥ pravaraśreṣṭhaṃ",
    "304:21": "deśayanti vṛṣabhī virajadharmam || 5 ||",
    "304:22": "preta tirya narakā manujadevāḥ",
    "304:23": "yakṣa rakṣa bhujagā asurasaṃghā |",
    "304:24": ".................................",
    "304:25": "nānakarmaviṣaye samanubhonti || 6 ||",
    "304:26": "sarvakṣetraviṣaye dhutarajānāṃ",
    "304:27": "cakra śreṣṭhapravaraṃ tadanirvṛttam |",
    "304:28": "deśayanti madhuraṃ sugataghoṣaṃ",
    "304:29": "saṃjñacitta jagatastatha vicāran || 7 ||",
    "304:30": "sattvakāyi sugatā vividhakṣetrā",
    "304:31": "kṣetri sattvapravarāḥ punavipākāḥ |",
    "304:32": "devamānuṣagatī tatha vicitrā",
    "304:33": "jñātva sarva sugato bhaṇati dharmam || 8 ||",
    "304:34": "sūkṣmasaṃjña bhavati vipulakṣetre",
    "304:35": "vipulasaṃjña bhavati rajanimitte |",
    "304:36": "evamādi vividhāṃ sugataṛddhiṃ",
    "304:37": "sarvaloka bhaṇato na kṣepayeyuḥ || 9 ||",
    "304:38": "īddaśaṃ vacamāhātmyaṃ vacitvā madhurasvaram |",
    "304:39": "praśāntā pariṣatprītā prekṣate vadatāṃ varam || 10 ||",
    "304:40": "praśānta parṣadaṃ jñātvā mokṣacandro'bravītpunaḥ |",
    "304:41": "aṣṭamyā bhūmiākārāṃ praveśaṃ ca nidarśaya || 11 ||",
    "304:42": "upasaṃhāragāthāḥ |",
    "304:43": "te bhūmya saptasu viśodhita prajñupāyā",
    "304:44": "mārgā susaṃbhṛta mahāpraṇidhānabaddhāḥ |",
    "304:45": "supratiṣṭhitā naravarāḥ kuśalopapetā",
    "304:46": "jñānābhilāṣi vidu aṣṭamimākramanti || 12 ||",
    "304:47": "te puṇyajñānupagatāḥ kṛpamaitrayuktā",
    "304:48": "jñānāpramāṇapathagāḥ khagabuddhikalpāḥ |",
    "304:49": "śrutadharma niścitabalopagatā maharṣī",
    "304:50": "kṣāntiṃ labhanti anutpādapraśāntisūkṣmām || 13 ||",
    "304:51": "ādāvajāta anutpāda alakṣaṇaṃ ca",
    "304:52": "asaṃbhūtatamavinaṣṭata cāpravṛttam |",
    "304:53": "bhāvasvabhāvavigatā tathatāvikalpā",
    "304:54": "mama cittacāravigatāḥ khagatulyakalpāḥ || 14 ||",
    "304:55": "te eva kṣāntisamanvāgata niṣprapañcā",
    "304:56": "gambhīracālya vidu śāntavicāraprāptāḥ |",
    "304:57": "durjñeya sarvajagatārahapratyayaiśca",
    "304:58": "cittaṃ nimittagrahasaṃjñavibhāvitatvāt || 15 ||",
    "304:59": "evaṃ sthitānamanucintavikalpa nāsti",
    "304:60": "bhikṣurnirodhyupagato'paprakalpaprāptaḥ |",
    "304:61": "svapnoghaprāpta pratibuddha tathāvikalpā",
    "304:62": "brahmāpure ratisaṅgarahito tathaiva || 16 ||",
    "304:63": "pūrvādhiṣṭhāna sugatā puna codayanti",
    "304:64": "eṣā sa kṣānti paramā sugatābhiṣeke |",
    "304:65": "asmāku jñāna vipulaṃ varabuddhadharmā",
    "304:66": "te tubhya nāsti ta hi vīryu samārabhāyam || 17 ||",
    "304:67": "kiṃcāpi śānta tava sarvakileśajvālā",
    "304:68": "jvalitaṃ niśamya puna kleśagatibhya lokam |",
    "304:69": "praṇidhāna pūrva smara sattvahitaṃ vicārya",
    "304:70": "jñānārthi prārthita kriyā jagamokṣahetoḥ || 18 ||",
    "304:71": "sada eṣa dharmata sthitā tathatāvikalpā",
    "304:72": "sarveṣu buddhajinaśrāvakapratyayānam |",
    "304:73": "na hi etinā daśabalāna prabhāvu loke",
    "304:74": "nānyatra jñānavipulaṃ tribhi adhvasaṅgam || 19 ||",
    "304:75": "evaṃ tamapratisamā naradevapūjyā",
    "304:76": "upasaṃharanti bahujñānamukhā vicārān |",
    "304:77": "jinadharmaniṣpattipraveśamanantapāraṃ",
    "304:78": "yasyā kalā na bhavate puna bodhicaryā || 20 ||",
    "304:79": "etāni prāpta vṛṣabhī varajñānabhūmim",
    "304:80": "ekakṣaṇena spharate diśatāḥ samantān |",
    "304:81": "jñānapraveśupagatā varabhijñaprāptā",
    "304:82": "yatha sāgare vahanu mārutayānaprāptaḥ || 21 ||",
    "304:83": "sābhogacittavigatāḥ sthitajñānakarma",
    "304:84": "vicinanti kṣetraprabhavaṃ vibhavasthitiṃ ca |",
    "304:85": "dhātuścatvāri vinibhāgagatāna tāṃśca",
    "304:86": "sūkṣmaṃ mahadgata vibhakti samosaranti || 22 ||",
    "304:87": "trisahasri sarvaparamāṇurajo taranti",
    "304:88": "catvāri dhātu jagakāyi vibhaktitaśca |",
    "304:89": "ratnā vibhaktiparamāṇu suvargatīṣu",
    "304:90": "bhinditva jñānaviṣayena gaṇentyaśeṣam || 23 ||",
    "304:91": "jñāne vibhāvitamanā vidu sarvakāyān",
    "304:92": "sve kāyi tatra upanenti jagārthahetoḥ |",
    "304:93": "trisahasra sarva ca spharitva vicitrarūpān",
    "304:94": "darśenti kāya vividhān tathanantaloke || 24 ||",
    "304:95": "sūryaṃ śaśiṃ ca vahni māruta antarīkṣe",
    "304:96": "svakamaṇḍalusya udake pratibhāsaprāptā |",
    "304:97": "jñānottame sthita tathācaladharmatāyāṃ",
    "304:98": "jaga śuddhaāśaya vidū pratibhāsaprāptā || 25 ||",
    "304:99": "yathaāśayaṃ jagata kāyavibhaktitāṃ ca",
    "304:100": "darśenti sarvapariṣe bhuvi sarvaloke |",
    "304:101": "vaśipratyayāśraya jinātmajaśrāvakānāṃ",
    "304:102": "darśenti te sugatakāya vibhūṣitāṅgān || 26 ||",
    "304:103": "sattvāṃśca kṣetra tatha karmavipāka kāyān",
    "304:104": "āryāśrayān vividhadharmajñānakāyān |",
    "304:105": "ākāśakāya vṛṣabhī samatāmupetaṃ",
    "304:106": "darśenti ṛddhi vividhān jagatoṣaṇārtham || 27 ||",
    "304:107": "vaśitā daśo vimalajñānavicāraprāptā",
    "304:108": "anuprāpta jñānakṛta maitrakṛpānukūlāḥ |",
    "304:109": "yāvacca sarvajinadharmamupādakarmā",
    "304:110": "trisaṃvaraiḥ susthitameka acalyakalpāḥ || 28 ||",
    "304:111": "ye cā balā jinasutāna daśa akṣobhyā",
    "304:112": "tehī upeta avibandhiya sarvamāraiḥ |",
    "304:113": "buddhairadhiṣṭhita namaskṛta śakrabrahmai-",
    "304:114": "statha vajrapāṇibalakaiḥ satatānubaddhāḥ || 29 ||",
    "304:115": "ima bhūmideśupagatā na guṇānamanto",
    "304:116": "no śakyate kṣayitu kalpasahasrakoṭyaiḥ |",
    "304:117": "te bhūya buddha niyutān samupāsayante",
    "304:118": "bhonto utapta yatha bhūṣaṇu rājamūrdhni || 30 ||",
    "304:119": "ima bhūmideśupagatā vidu bodhisattvā",
    "304:120": "mahabrahma bhonti sahasrādhipatī guṇāḍhyāḥ |",
    "304:121": "trayayānadeśana akṣobhyasaṃhāraprāptā",
    "304:122": "maitrāyanaḥ śubhaprabhā jagakleśaghātī || 31 ||",
    "304:123": "ekakṣaṇena daśakṣetraśataḥsahasrā",
    "304:124": "yāvā rajodhātu tattaka samādhyupenti |",
    "304:125": "paśyanti tattaka daśadiśi sattvasārān",
    "304:126": "bhūyo ataḥ praṇidhiśreṣṭha vyūha nekāḥ || 32 ||",
    "304:127": "saṃkṣepa eṣa nirdiṣṭo aṣṭamāyā jinātmajāḥ |",
    "304:128": "vistaraḥ kalpakoṭībhirna śakyaḥ sarva bhāṣitum || 33 ||"
}