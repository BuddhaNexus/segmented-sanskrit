{
  "S04n542:0": " || susaṃbhavaparivartaḥ ||",
  "S04n542:1": "sasāgarā tyakta vasuṃdharā tadā yadā babhūva nṛpa cakravartī |",
  "S04n542:2": "catvāri dvīpāni saratnapūrṇaniryāti tā pūrvajineṣu mahyam || 1 ||",
  "S04n542:3": "na cāsti tadvastu priyaṃ manāpaṃ",
  "S04n542:4": "pūrvaṃ ca mahyaṃ na va tyaktamāsīt |",
  "S04n542:5": "taṃ dharmakāyaṃ parimārgaṇārthaḥ",
  "S04n542:6": "priyajīvitaṃ tyaktamanekakalpān || 2 ||",
  "S04n542:7": "yatha pūrvakalpeṣu acintiyeṣu",
  "S04n542:8": "ratnaśikhisya sugatasya śāsane |",
  "S04n542:9": "parinirvṛtasya sugatasya tasya",
  "S04n542:10": "susaṃbhavo nāma babhūva rājā || 3 ||",
  "S04n542:11": "sa cakravartī caturdvīpa īśvaraḥ",
  "S04n542:12": "samudraparyantamahī praśāsyate |",
  "S04n542:13": "jinendraghoṣāya ca rājadhānīya",
  "S04n542:14": "supto babhūvā tada rājakuñjaraḥ || 4 ||",
  "S04n542:15": "svapnāntare buddhaguṇāñca śrutvā",
  "S04n542:16": "ratnoccayaṃ paśyati dharmabhāṇakam |",
  "S04n542:17": "sthita sūryamadhye va virocamānaṃ",
  "S04n542:18": "prakāśayantaṃ ima sūtrarājam || 5 ||",
  "S04n542:19": "svapnādvibuddhaśca babhūva rājā",
  "S04n542:20": "pītisphuṭaṃ sarvaśarīramasya |",
  "S04n542:21": "abhiniṣkrarma rājakulāni dṛṣṭu",
  "S04n542:22": "upasaṃkramī śrāvakasaṃghamagram || 6 ||",
  "S04n542:23": "karoti pūjāṃ jinaśrāvakāṇāṃ",
  "S04n542:24": "ratnoccayaṃ pṛcchati dharmabhāṇakam |",
  "S04n542:25": "kva cāsti bhikṣūriha cāryasaṃghe",
  "S04n542:26": "ratnoccayo nāma guṇānvitaśca || 7 ||",
  "S04n542:27": "tenāntareṇā ratanoccayo hi",
  "S04n542:28": "anyatra gūhāntara saṃniṣaṇaḥ |",
  "S04n542:29": "vicitraratnaṃ ima sūtrarājaṃ",
  "S04n542:30": "svadhyāyamānaḥ sukha saṃniṣaṇaḥ || 8 ||",
  "S04n542:31": "deśenti rājasya tadantareṇa",
  "S04n542:32": "ratnoccayaṃ bhikṣu sa dharmabhāṇakam |",
  "S04n542:33": "anyatra gūhāntarasaṃniṣaṇaṃ |",
  "S04n542:34": "taṃ tena raśmīśriyayā jvalantam || 9 ||",
  "S04n542:35": "eṣo'tra ratnoccaya dharmabhāṇako",
  "S04n542:36": "dhāreti gambhīrajinasya gocaram |",
  "S04n542:37": "svarṇaprabhāsottamasūtraratnaṃ",
  "S04n542:38": "sūtrendrarājaṃ satataṃ prakāśayet || 10 ||",
  "S04n542:39": "vanditva pādau ratanoccayasya",
  "S04n542:40": "susaṃbhavo rāja idaṃ pravīddhi |",
  "S04n542:41": "deśe hi me pūrṇaśaśāṅka cakraṃ",
  "S04n542:42": "svarṇaprabhāsottamasūtraratnam || 11 ||",
  "S04n542:43": "adhivāsayī so ratanoccayaśca",
  "S04n542:44": "rājñaśca tasyaiva susaṃbhavasya |",
  "S04n542:45": "sarvatrisāhasrikalokadhātau",
  "S04n542:46": "praharṣitāssarvi babhūvu devatāḥ || 12 ||",
  "S04n542:47": "vasudhāpradeśe parame viśiṣṭe",
  "S04n542:48": "ratnodake gandhajalāmvusikte |",
  "S04n542:49": "puṣpāvakīrṇāṃ dharaṇīṃ sa kṛtvā",
  "S04n542:50": "tatrāsanaṃ prāpya tadā narendraḥ || 13 ||",
  "S04n542:51": "samalaṃkṛtaṃ rājña tadāsanaṃ ca",
  "S04n542:52": "cchatrairdhvajairghaṇṭasahasranekaiḥ |",
  "S04n542:53": "nānāvicitrairvarapuṣpacandrair",
  "S04n542:54": "abhyokire rājña tadāsanaṃ ca || 14 ||",
  "S04n542:55": "devāśca nāgāsurakiṃnarāśca",
  "S04n542:56": "yakṣāśca yakṣendramahoragāśca |",
  "S04n542:57": "divyaiśca māndāravapuṣpavarṣair",
  "S04n542:58": "abhyāvakīrṇāśca tadāsanaṃ ca || 15 ||",
  "S04n542:59": "acintiyānanta sahasrakoṭiyo",
  "S04n542:60": "ye āgatā devabhavāgrakāmāḥ |",
  "S04n542:61": "abhiniṣkramitvā ratanoccayaṃ hi",
  "S04n542:62": "abhyo kiranti sma ca sālapuṣpā || 16 ||",
  "S04n542:63": "so cāpi ratnoccaya dharmabhāṇakaḥ",
  "S04n542:64": "śubhābhagātraḥ śucivastraprāvṛtaḥ |",
  "S04n542:65": "upasaṃkramitvā ca tadāsanaṃ hi",
  "S04n542:66": "kṛtāñjalībhūtva namasyate ca || 17 ||",
  "S04n542:67": "devendradevāni ca devatāni",
  "S04n542:68": "māndārapuṣpaṃ ca pravarṣayanti |",
  "S04n542:69": "acintiyā tūryaśatā sahasrā",
  "S04n542:70": "pravādayanti sthita antarīkṣe || 18 ||",
  "S04n542:71": "abhīruhitvā ca sa saṃniṣaṇo",
  "S04n542:72": "ratnoccayo bhikṣu sa dharmabhāṇakaḥ |",
  "S04n542:73": "anusmaritvā daśasū diśāsu",
  "S04n542:74": "acintiyā buddhasahasrakoṭyaḥ || 19 ||",
  "S04n542:75": "sarveṣa sattvāna kṛpāṃja nitya",
  "S04n542:76": "kāruṇyacittaṃ samupādayet saḥ |",
  "S04n542:77": "rājñaśca tasyāpi susaṃbhavasya",
  "S04n542:78": "prakāśitaṃ sūtramidaṃ tadantare || 20 ||",
  "S04n542:79": "kṛtāñjalībhūtva sthihitva rājā",
  "S04n542:80": "yaḥ kāyavācā manumoditaḥ saḥ |",
  "S04n542:81": "saddharmavegāśrupramuktanetraḥ",
  "S04n542:82": "pratisphaṭastasya babhūva kāyaḥ || 21 ||",
  "S04n542:83": "imasya sūtrasya ca pūjanārthaṃ",
  "S04n542:84": "susaṃbhavo rāja tadantareṇa",
  "S04n542:85": "gṛhṇitva cintāmaṇirājaratnaṃ",
  "S04n542:86": "sarvārthahetoḥ praṇidhiṃ cakāra || 22 ||",
  "S04n542:87": "varṣantu adyā iha jambudvipe",
  "S04n542:88": "sasaptaratnāṇi ca bhūṣaṇāni",
  "S04n542:89": "ye ceha sattvāḥ khalu jambudvipe",
  "S04n542:90": "sukhitāśca bheṣyanti mahādhanāśca || 23 ||",
  "S04n542:91": "caturṣu dvīpeṣu pravarṣitāni",
  "S04n542:92": "saptāni ratnāni tadantareṇa |",
  "S04n542:93": "keyūrahārā varakuṇḍalāni",
  "S04n542:94": "tathānnapāne vasanāni caiva || 24 ||",
  "S04n542:95": "dṛṣṭvā ca taṃ rāja susaṃbhavaśca",
  "S04n542:96": "ratnapravarṣaṃ khalu jambudvīpe |",
  "S04n542:97": "catvāri dvīpāni saratnapūrṇā",
  "S04n542:98": "niryātayī ratnaśikhisya śāsane || 25 ||",
  "S04n542:99": "ahaṃ ca saḥ śākyamunistathāgataḥ",
  "S04n542:100": "susaṃbhavo nāma babhūva rājā |",
  "S04n542:101": "yeneha me tyakta vasuṃdharā tadā",
  "S04n542:102": "catvāri dvīpāni saratnapūrṇā || 26 ||",
  "S04n542:103": "akṣobhya āsīt sa tathāgataśca",
  "S04n542:104": "ratnoccayo bhikṣu sa dharmabhāṇakaḥ |",
  "S04n542:105": "yenāsya rājasya susaṃbhavasya",
  "S04n542:106": "prakāśitaṃ sūtramidaṃ tadāntare || 27 ||",
  "S04n542:107": "yanme śrutaṃ sūtramidaṃ tadantare",
  "S04n542:108": "ekāgravācāmanumoditaṃ ca |",
  "S04n542:109": "tenaiva mahyaṃ kuśalena karmaṇā",
  "S04n542:110": "śrotānumodena śrutena tena || 28 ||",
  "S04n542:111": "suvarṇavarṇaṃ śatapuṇyalakṣaṇaṃ",
  "S04n542:112": "labheyi kāyaṃ priyadarśanaṃ sadā |",
  "S04n542:113": "nayanābhirāmaṃ janakāntadarśanaṃ",
  "S04n542:114": "ratiṃkaraṃ devasahasrakoṭinām || 29 ||",
  "S04n542:115": "navottaraṃ notisahasrakoṭyā",
  "S04n542:116": "kalpānabhūvaṃ nṛpacakravartī |",
  "S04n542:117": "aneka kalpāna sahasrakoṭyo",
  "S04n542:118": "trailokyarājatva mayānubhūtam || 30 ||",
  "S04n542:119": "acintiyā kalpa babhūva śakraḥ",
  "S04n542:120": "tathaiva brahmendra praśāntamānasaḥ |",
  "S04n542:121": "ārāgitā me balāprameyā",
  "S04n542:122": "yeṣāṃ pramāṇaṃ na kadāci vidyate || 31 ||",
  "S04n542:123": "tathā pramāṇaṃ bahu puṇyaskandhaṃ",
  "S04n542:124": "yanme śrutaṃ sūtranumoditaṃ ca |",
  "S04n542:125": "yathābhiprāyeṇa mi bodhi prāptā",
  "S04n542:126": "saddharmakāyaśca mayā hi labdha || 32 ||",
  "S04n542:127": "iti śrīsuvarṇaprabhāsottamasūtrendrarāje susaṃbhavaparivarto",
  "S04n542:128": "nāma caturdaśamaḥ ||"
}