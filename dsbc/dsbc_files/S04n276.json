{
  "S04n276:0": "6 devī",
  "S04n276:1": "atha maṃjuśrīkumārabhūto licchavi vimalakīrtim evamavocat-“satpuruṣa,",
  "S04n276:2": "bodhisattvena sarvasattvāḥ kathaṃ draṣṭavyāḥ ?“-",
  "S04n276:3": "abravīt-“maṃjuśrīḥ,",
  "S04n276:4": "tadyathāpi nāma vijñaḥ puruṣa udakacandraṃ prakṣete,",
  "S04n276:5": "evameva bodhisattvena sarvasattvā draṣṭavyāḥ |",
  "S04n276:6": "maṃjuśrīḥ, tadyathāpi nāma māyākāro māyākāranirmitamanuṣyaṃ prekṣate,",
  "S04n276:7": "evameva bodhisattvena sarvasattvā draṣṭavyāḥ |",
  "S04n276:8": "maṃjuśrīḥ, tadyathāpi nāmā'darśamaṇḍale mukhaṃ dṛśyam ,",
  "S04n276:9": "evameva bodhisattvena sarvasattvā draṣṭavyāḥ |",
  "S04n276:10": "maṃjuśrīḥ, tadyathāpi nāma mṛgatṛṣṇikājalam bodhisattvena sarvasattvā draṣṭavyāḥ |",
  "S04n276:11": "maṃjuśrī, tadyathāpi nāma pratiśrutkāghoṣanādiḥ |||||||||",
  "S04n276:14": "ākāśamegharāśiḥ || ||",
  "S04n276:18": "fenapiṇḍasya",
  "S04n276:19": "pūrvāntaḥ ||| )budbudodayavyayau ||||||||",
  "S04n276:20": "kadalīsārāpekṣeva |||||||||||",
  "S04n276:21": "vidyuccyutiriva ||||||||",
  "S04n276:22": "paṃcamadhātusadṛśāḥ ||||||",
  "S04n276:23": "saptamā'yatanasadṛśāḥ |||||||||",
  "S04n276:24": "ārupyeṣu rūpadarśanasadṛśā |||",
  "S04n276:25": "dagdhabījād |||",
  "S04n276:26": "'ṅkuraniṣpattiriva |||||||||",
  "S04n276:27": "maṇḍūkasya romā'cchādanaṃ yathā |||||",
  "S04n276:28": "ṃaraṇārthikasya krīḍāratiriva |||",
  "S04n276:29": "srotā'pannasya satkāyadṛṣṭiryathā ||||",
  "S04n276:30": "sakṛdāgāmini tṛtīyabhava iva |||||||",
  "S04n276:31": "anāgāmini garbhāvakrāntiḥ |||||||||||",
  "S04n276:34": "arhati rāgadveṣamohāḥ || ||",
  "S04n276:38": "kṣāntilābhibodhisattve mātsaryadauḥśīlyavyāpādavihisācittam || ||  || ||",
  "S04n276:46": "tathāgate vāsanā || ||",
  "S04n276:50": "jātyandhajanena rūpa darśanam || ||  |||",
  "S04n276:57": "nirodhasamāpatti( lābhina ) ānāpānaḥ ||  |||",
  "S04n276:62": "akāśe śakuneḥ padam || ||  || ||  ||",
  "S04n276:72": "paṇḍakalāṃgularohaṇaḥ || ||  || ||",
  "S04n276:80": "vandhyāputraprāptiḥ || ||  ||",
  "S04n276:86": "tathāgatanirbhitasya kleśotpattiḥ ||  |||",
  "S04n276:91": "vibodhe svapnadṛṣṭadarśanam || ||  ||  |||",
  "S04n276:100": "asaṅkalpe kleśaḥ || ||  |||",
  "S04n276:107": "ahetukatvādagnyotpādaḥ parinirvṛtasya pratisandhiriva bodhisattvena sarvasattvāḥ pratyavekṣyāḥ |",
  "S04n276:108": "maṃjuśrīḥ, evam paramārthata eva nairārmyaprabodhena sarvasattvāḥ pratyavekṣyāḥ“ |",
  "S04n276:109": "abravīt-“kulaputra,",
  "S04n276:110": "yadi bodhisattvena sarvasattvā evam pratyavekṣyāḥ,",
  "S04n276:111": "kathamatha sarvasattveṣu mahāmaitryupapatsyate ?“-",
  "S04n276:112": "āha-“maṃjuśrīḥ,",
  "S04n276:113": "yadā bodhisattvastathā hi pratyavekṣate-'evaṃ dharma parijñāya,",
  "S04n276:114": "ebhyaḥ sattvebhyo darśayāmi'- ti tataḥ sarvasattveṣu samyakśaraṇamaitryupapadyate-",
  "S04n276:115": "“anupādānakāraṇādupaśāntamaitrī,",
  "S04n276:116": "kleśābhāvenātāpamaitrī,",
  "S04n276:117": "tryadhvasamatākāraṇādyadyadupamatā maitrī,",
  "S04n276:118": "paryutthānābhāva kāraṇādavirodhamaitrī,",
  "S04n276:119": "ādhyātmikabāhyāsambhedakāraṇādadvayamaitrī,",
  "S04n276:120": "suniṣṭhākāraṇādakṣobhyamaitrī,",
  "S04n276:121": "abhedyābhiprāyavajrakāraṇāddṛḍhamaitrī,",
  "S04n276:122": "svabhāvaviśuddhikāraṇād viśuddhimaitrī,",
  "S04n276:123": "āśayasamatākāraṇāt samatāmaitrī,",
  "S04n276:124": "arihananakāraṇādarhanmaitrī,",
  "S04n276:125": "anācchedyasattvaparipācanakāraṇād bodhisattvamaitrī,",
  "S04n276:126": "bhūyo'pi tathatā'dhigamakāraṇāt tathāgatamaitrī,",
  "S04n276:127": "sattvāpasvāpanasuprabodhanakāraṇād buddhamaitrī,",
  "S04n276:128": "svayamabhisaṃbodhikāraṇāt svayaṃbhūmaitrī,",
  "S04n276:129": "tulyarasakāraṇād bodhimaitrī,",
  "S04n276:130": "anunayapratighaprahāṇakāraṇādanāropamaitrī,",
  "S04n276:131": "mahāyānaparyavabhāsakaraṇato mahākaruṇāmaitrī,",
  "S04n276:132": "śūnyatānairātmyapratyavekṣaṇakāraṇādaparikhedamaitrī,",
  "S04n276:133": "ācāryamuṣṭyabhāvakāraṇādadharmadānamaitrī,",
  "S04n276:134": "duḥśīlasattvāpekṣākāraṇāt śīla-maitrī,",
  "S04n276:135": "svapararakṣākāraṇāt kṣāntimaitrī,",
  "S04n276:136": "sarvasattvabhāravahanakāraṇād vīryamaitrī,",
  "S04n276:137": "anāsvādakāraṇād dhyānamaitrī,",
  "S04n276:138": "kālenāsādhanakāraṇāt prajñāmaitrī,",
  "S04n276:139": "samantadvāradarśanakāraṇādupāyamaitrī,",
  "S04n276:140": "abhiprāyapariśuddhikāraṇādakuhanamaitrī,",
  "S04n276:141": "paścāttāpakaraṇato niścalamaitrī,",
  "S04n276:142": "anaṅgaṇakāraṇādadhyāśayamaitrī,",
  "S04n276:143": "akṛtrimakāraṇādamāyāvimaitrī,",
  "S04n276:144": "buddhasukhapratiṣṭhāpanakāraṇāt sukhamaitrī |",
  "S04n276:145": "maṃjuśrīḥ, sā hi bodhisattvasya maitrī |“",
  "S04n276:146": "abravīt-“tasya mahākaruṇā kim ?",
  "S04n276:147": "“ āha-“yadyat kuśalamūlaṃ syāt kuśalamūlaṃ syāt , ( tat )",
  "S04n276:148": "sarvasattvebhya utsṛjati“ |",
  "S04n276:149": "abravīt-“tasya mahāmuditā kim ?“ |",
  "S04n276:150": "āha-“yaḥ (sa) dānāt prītimanobhūto'vipratisāraḥ“ |",
  "S04n276:151": "abravīt-“tasyopekṣā kim ?“ āha- “yaḥ (sa)",
  "S04n276:152": "ubhayārthotpādaḥ“ |-",
  "S04n276:153": "abravīt-“saṃsārabhayabhītena ki pratisartavyam ?",
  "S04n276:154": "“ āha- “saṃsārabhayabhītena maṃjuśrīrbodhisattvena buddhamāhātmyaṃ pratisartavyam“ |",
  "S04n276:155": "āha- “buddhamahātmye sthātukāmena kutra sthātavyam ?",
  "S04n276:156": "“ āha- “buddhamahātmye sthātukāmena sarvasattvasamatāyāṃ sthātavyam |",
  "S04n276:157": "“ āha-“sarvasattvasamatāyāṃ sthātukāmena kutra sthātavyam“ āha- “sarvasattvasamatāyāṃ sthātukāmena sarvasattvapramokṣāya sthātavyam“ |",
  "S04n276:158": "abravīt-“sarvasattvapramokṣāya kartukāmena kathaṃ karaṇīyam ?",
  "S04n276:159": "“ āha- “sarvasattvapramokṣāya kartukāmena kleśapramokṣaḥ karaṇīyaḥ“ |",
  "S04n276:160": "abravīt- “kleśaprahātukāmena kathaṃ prayoktavyam ?",
  "S04n276:161": "“ āha- “kleśaprahātukāmena yoniśaḥ prayoktavyam“ |",
  "S04n276:162": "abravīt- “kathaṃ prayujyamāno yoniśaḥ prayujyate ?",
  "S04n276:163": "“ āha- “anutpādānirodhayoḥ prayogo hi yoniśaḥ prayogo'sti“ |",
  "S04n276:164": "abravīt- “anudayaḥ kim,",
  "S04n276:165": "kim anirodhaḥ ?",
  "S04n276:166": "“ āha- “akuśalānudayaśca kuśalānirodhaḥ“ |",
  "S04n276:167": "abravīt-“kuśalākuśalamūlaṃ kim ?",
  "S04n276:168": "“ āha-“satkāya -(dṛṣṭi ) rmūlam“ |",
  "S04n276:169": "abravīt-“satkāya - ( dṛṣṭi)",
  "S04n276:170": "mūlaṃ kim ?“ āha- “satkāya - ( dṛṣṭi )",
  "S04n276:171": "mūlaṃ rāgaḥ“ |",
  "S04n276:172": "abravīt- “ki rāgamūlam ?",
  "S04n276:173": "“ -āha- “rāgasya mūlaṃ hyabhūtaparikalpaḥ“ |",
  "S04n276:174": "abravīt-“abhūtaparikalpasya kiṃ mūlam ?",
  "S04n276:175": "“ āha-“ abhūtaparikalpasya hi )",
  "S04n276:176": "viparyastā saṃjñā mūlam“ |",
  "S04n276:177": "āha-“viparyastāyāḥ saṃjñāyāḥ ki mūlam ?",
  "S04n276:178": "?",
  "S04n276:179": "“ -( āha- “viparyastāyāḥsaṃjñāyā)",
  "S04n276:180": "apratiṣṭhānaṃ mūlam“ |",
  "S04n276:181": "āha-“apratiṣṭhāyāḥ kiṃ mūlam ?",
  "S04n276:182": "“ āha-“yanmaṃjuśrīrapratiṣṭhānaṃ,",
  "S04n276:183": "na tasya kiṃcinmūlam |",
  "S04n276:184": "iti hyapratiṣṭhānamūlapratiṣṭhitāḥ sarvadharmāḥ“ |",
  "S04n276:185": "atha tasmin gṛhe kasyacitsthānasya devī,",
  "S04n276:186": "teṣāṃ bodhisattvānām mahāsattvānāmimāṃ dharmadeśanāṃ śrutvā,",
  "S04n276:187": "hṛṣṭodagrā cāttamanāḥ,",
  "S04n276:188": "audārikamātmabhāvamabhisaṃdṛśya,",
  "S04n276:189": "divyapuṣpaistān bodhisattvān mahāsattvāṃśca mahāśrāvakānabhikirati sma |",
  "S04n276:190": "yāni ca bodhisattvānāṃ kāye'bhyavakīrṇāni puṣpāni,",
  "S04n276:191": "tāni bhūmau prapatanti sma |",
  "S04n276:192": "yāni mahāśrāvakānāṃ kāya āpannāni puṣpāni,",
  "S04n276:193": "tāni tatraiva prasaktāni bhūmau na prapatanti sma |",
  "S04n276:194": "tataste mahāśrāvakā ṛddhividhiprātihāryeṇa puṣpānyādhunanti sma,",
  "S04n276:195": "api kho pana tāni na prapatanti sma |",
  "S04n276:196": "atha sā devayāyuṣmantaṃ śāriputrametadavocat-“bhadanta śāriputra,",
  "S04n276:197": "imāni puṣpānyādhūya kiṃ kariṣyasi ?",
  "S04n276:198": "“ āha-“devi, imāni puṣpāni na yujyante;",
  "S04n276:199": "tasmādimāni puṣpāni riṃcāmi“ |",
  "S04n276:200": "devyabravīt - “ bhadanta śāriputra,",
  "S04n276:201": "evammā vādīḥ |",
  "S04n276:202": "tat kasya hetoḥ ?",
  "S04n276:203": "yujyanta imāni puṣpāni |",
  "S04n276:204": "tat kasya hetoḥ ?",
  "S04n276:205": "yatastāni puṣpāni nirvikalpāni |",
  "S04n276:206": "nirvikalpeṣu śāriputraḥ sthavira eva kalpayati ca vikalpayati |",
  "S04n276:207": "bhadanta śāriputra,",
  "S04n276:208": "yat svākhyāte dharmavinaye pravrajitāḥ kalpayanti ca vikalpayanti,",
  "S04n276:209": "tadhi na yujyate |",
  "S04n276:210": "sthavīre kalpayati ca vikalpayati,",
  "S04n276:211": "yannirvikalpaṃ tadhi yujyate |",
  "S04n276:212": "“paśya, bhadanta śāriputra-tathā hi kalpavikalpaprahāṇakāraṇād bodhisattvānāṃ mahāsattvānāṃ kāye puṣpāni na sajjanti |",
  "S04n276:213": "tadyathāpi nāma bhayajātīyamanuṣye'manuṣyairavatāro labhyate,",
  "S04n276:214": "evameva saṃsārabhayabhīteṣu rūpaśabda gandharasaspraṣṭavyebhyo'vatāraḥ pratilabhyaḥ |",
  "S04n276:215": "ye sarvasaṃskārakleśabhayāpagatāḥ,",
  "S04n276:216": "tebhyo rūpaśabdagandharasaspraṣṭavyāni ki kariṣyanti ?",
  "S04n276:217": "yeṣu vāsanā'prahīṇā,",
  "S04n276:218": "teṣu puṣpa (anya )",
  "S04n276:219": "pi sajjanti;",
  "S04n276:220": "yeṣāṃ tu vāsanā prahīṇā,",
  "S04n276:221": "teṣāṃ kāye puṣpa( ani )",
  "S04n276:222": "na sajjanti |",
  "S04n276:223": "tasmāt sarvavāsanāvighātakānāṃ kāye puṣpānya saktāni“ |",
  "S04n276:224": "tata āyuṣmāṃśāriputrastāṃ devīmetadavocat-“devi,",
  "S04n276:225": "tvamimaṃ gehaṃ praviśya kiyacciracaritam ?",
  "S04n276:226": "“ devyāha-“sthaviro vimokṣaṃ praviṣṭo yāvat, ( tac-)ciram“ |",
  "S04n276:227": "abravīt- “devi,",
  "S04n276:228": "tvamasmin gehe sthitvā,",
  "S04n276:229": "aciraṃ dṛṣṭā“ |",
  "S04n276:230": "āha-“sthaviro vimokṣaṃ praviṣṭaḥ kiyacciram ?",
  "S04n276:231": "“-atha sthavirastūṣṇībhūto'bhūt |",
  "S04n276:232": "āha-“mahāprajñāvatāmagryaḥ sthaviraḥ kasmānmaunī cedānīṃ sahasā praśnanna pariharasi ?",
  "S04n276:233": "“ abravīt- “devi,",
  "S04n276:234": "vimokṣa'nabhilāpyaśca sa yathā vaktavyaḥ,",
  "S04n276:235": "( tan ) na jānāmi“ |",
  "S04n276:236": "āha- “yāni svavireṇākṣarāṇyuktāni,",
  "S04n276:237": "sarvāṇi tāni vimokṣalakṣaṇāni |",
  "S04n276:238": "tat kasya hetoḥ ?",
  "S04n276:239": "yo vimokṣaḥ,",
  "S04n276:240": "sa hyanantaragataśca na bahirdhā nobhayaścānupalabdhaḥ |",
  "S04n276:241": "evameva tānyakṣarāṇyanantaragatāni na ca bahirdhā nobhayāni cānupalabdhāni |",
  "S04n276:242": "tasmāt, bhadanta śāriputra,",
  "S04n276:243": "akṣarāpakarṣaṇena vimokṣammāprativedayasva |",
  "S04n276:244": "tat kasya hetoḥ ?",
  "S04n276:245": "yataḥ sarvadharmasama( tā )",
  "S04n276:246": "''ryavimokṣaḥ“ |",
  "S04n276:247": "abravīt - “devi,",
  "S04n276:248": "rāgadveṣamohāpagateṣu vimokṣa nanu nāsti ?",
  "S04n276:249": "“ devyāha- “ 'rāgadveṣamohāpagateṣu vimokṣa' iti sa hyabhimānikebhya upadeśaḥ |",
  "S04n276:250": "ye'nabhimānikāḥ,",
  "S04n276:251": "tebhyo hi rāgadveṣamohasvabhāvatā vimokṣaḥ“ |",
  "S04n276:252": "athā'yuṣmāṃśāriputrastāṃ devimetadavocat-“sādhu,",
  "S04n276:253": "devi; ki prāpya,",
  "S04n276:254": "ki sākṣātkṛtya tvamevaṃpratibhānavatī ?“ |",
  "S04n276:255": "āha- “bhadanta śāriputra,",
  "S04n276:256": "mayā na kiñcit prāptaṃ vā sākṣātkṛtaṃ vā |",
  "S04n276:257": "ato me pratibhāna īdṛśaḥ |",
  "S04n276:258": "yeṣāmevam 'asmābhi prāptañca sākṣātkṛtam' iti,",
  "S04n276:259": "te hi svākhyātadharmavinaye ''timānikā' ucyante“ |",
  "S04n276:260": "abravīt-“devi,",
  "S04n276:261": "tvaṃ ki śrāvakayānīyā pratyekabuddhayānīyā vā mahāyānīyā vā ?",
  "S04n276:262": "“ āha- “śrāvakayānaṃ darśayatī,",
  "S04n276:263": "ahaṃ śrāvakayāninī |",
  "S04n276:264": "dvādaśa(aṃga)",
  "S04n276:265": "pratītyasamutpādeadvāreṇāvatāraṇen-āhaṃ pratyekabuddhayāninī |",
  "S04n276:266": "anutsṛṣṭāyāmmahākaruṇāyām ahammahāyānīyā |",
  "S04n276:267": "“bhadanta śāriputra,",
  "S04n276:268": "api tu khalu punaryathā campakavane praviṣṭe,",
  "S04n276:269": "eraṇḍagandho na ghrāyate,",
  "S04n276:270": "campakavane praviṣṭe'pi kho pana campakagandho ghrāyate; evameva,",
  "S04n276:271": "bhadanta śāriputra,",
  "S04n276:272": "asmin buddhadharmaguṇagandhopete gehe vihāriṇā śrāvakapratyekabuddhagandho na ghrāyate |",
  "S04n276:273": "“bhadanta śāriputra,",
  "S04n276:274": "ye śakrabrahmalokapāladevanāgayakṣagandharvāsuagaruḍakiṃnaramahoragā asmin gehe niviṣṭāḥ,",
  "S04n276:275": "tepayasya satpuruṣasya dharma śrutvā,",
  "S04n276:276": "buddhadharmaguṇagandhena bodhicittamutpādya prakrāntāḥ |",
  "S04n276:277": "“bhadanta śāriputra,",
  "S04n276:278": "asmin gehe dvādaśa varṣāṇi mahāmaitrīmahākaruṇā samarpitāṃ cācintyabuddhadharmasamprapuktāṃ ( kathāṃ )",
  "S04n276:279": "sthāpayitvā,",
  "S04n276:280": "śrāvakapratyekabuddhasahagatāṃ kathāṃ purā nāśrauṣam |",
  "S04n276:281": "bhadanta śāriputra,",
  "S04n276:282": "asmin gṛhe'ṣṭavidhā āścaryadbhutaprāptā dharmāḥ satatasamitamābhāsaṃ gacchanti |",
  "S04n276:283": "katame'ṣṭau ?",
  "S04n276:284": "“asmin gṛhe satatasamitaṃ suvarṇavarṇaprabhā |",
  "S04n276:285": "ato rātrīdivanna prajñāyate |",
  "S04n276:286": "asmin gṛhe candrasūryau na ca dṛśyete |",
  "S04n276:287": "ayaṃ prathama āścaryādbhuto dharmaḥ |",
  "S04n276:288": "“punaraparaṃ,",
  "S04n276:289": "bhadanta śāriputra,",
  "S04n276:290": "ye praviśanti idaṃ gṛhaṃ,",
  "S04n276:291": "teṣāṃ samanantarapraviṣṭānāṃ sarvakleśā na bādhante |",
  "S04n276:292": "ayaṃ dvitīya āścaryādbhūto dharmaḥ |",
  "S04n276:293": "“punaraparaṃ,",
  "S04n276:294": "bhadanta śāriputra,",
  "S04n276:295": "asmin gṛhe sadā śakrabrahmalokapālāśca sarvabuddhakṣetrāgatā bodhisattvā avirahitāḥ |",
  "S04n276:296": "ayaṃ tṛtīya āścaryādbhūto dharmaḥ |",
  "S04n276:297": "“punaraparaṃ,",
  "S04n276:298": "bhadanta śāriputra,",
  "S04n276:299": "asmin gṛhe satatasamitaṃ dharmāvadhoṣaṇañca ṣaṭpāramitāpratisaṃyuktā kathā cāvaivartikadharmacakrakathā 'virahitāḥ |",
  "S04n276:300": "ayaṃ caturtha āścaryādbhuto dharmaḥ |",
  "S04n276:301": "“punaraparaṃ,",
  "S04n276:302": "bhadanta śāriputra,",
  "S04n276:303": "asmin gṛhe sadā divyamānuṣyadundubhisaṅgītavādyaṃ krīyate;",
  "S04n276:304": "tebhyo dundubhibhyo buddhadharma( sya )",
  "S04n276:305": "āprameyabidhighoṣaḥ sarvakāleṣūtpadyate |",
  "S04n276:306": "āyaṃ pañcama āścaryādbhūto dharmaḥ |",
  "S04n276:307": "“punaraparaṃ,",
  "S04n276:308": "bhadanta śāriputra,",
  "S04n276:309": "asmin gṛhe sarvaratnasampūrṇāścaturakṣayamahānidhayo vidyante |",
  "S04n276:310": "tadanubhāvena sarvairdaridraiśca vyasanibhiḥ prapannam, ( mahānidhi-)",
  "S04n276:311": "kuṇḍamapi tvakṣayam |",
  "S04n276:312": "ayaṃ ṣaṣṭha āścaryādbhuto dharmaḥ |",
  "S04n276:313": "“punaraparaṃ,",
  "S04n276:314": "bhadanta śāriputra,",
  "S04n276:315": "asmin gṛhe tathāgatāḥ śākyamuniścāmitābhaścākṣobhyaśca ratnaśrīśca ratnārciśca ratnacandraśca ratnavyūhaśca duṣpahaśca sarvārthasiddhaśca mahāratnaśca sihaprasiddhiśa sihasvaraścā'dayo daśadikṣvaparimāṇatathāgatā asya satpuruṣasya sahacittamātreṇa samāgacchanti cāgatāstathāgataguhyannāma dharmamukhapraveśaṃ nidarśya pratigacchanti |",
  "S04n276:316": "ayaṃ saptama āścaryādbhūto dharmaḥ |",
  "S04n276:317": "“punaraparaṃ,",
  "S04n276:318": "bhadanta śāriputra,",
  "S04n276:319": "asmin gṛhe sarvadevaveśmavyūhāścasarvabuddhakṣetraguṇālaṅkārā ābhāsaṃ gacchanti |",
  "S04n276:320": "ayamaṣṭama āścaryādbhūto dharmaḥ |",
  "S04n276:321": "“ bhadanta śāriputra,",
  "S04n276:322": "asmin gṛhe teṣvaṣṭāsvāścaryādbhuteṣu dharmeṣvābhāsaṃ gacchatsu cedṛśācintyadharme dṛśyamāne,",
  "S04n276:323": "kaḥ śrāvakadharmamicchet ?“",
  "S04n276:324": "abravīt-“devi,",
  "S04n276:325": "yadi te strībhāvāt syādvikāraḥ,",
  "S04n276:326": "kimaparādhaḥ ?",
  "S04n276:327": "“ āha-“yāvad dvādaśa varṣāṇi strībhāvamme mṛgyamāṇā, ( so )",
  "S04n276:328": "- 'dyāpi (mayā)",
  "S04n276:329": "nopalabhyate |",
  "S04n276:330": "bhadanta śāriputra,",
  "S04n276:331": "tasyai māyākāreṇa nirmitāyai striyai evaṃ 'yadi te strībhāvāt syādvikāraḥ,",
  "S04n276:332": "kimaparādha ?",
  "S04n276:333": "' ityukte, tat ki kathayeta ?",
  "S04n276:334": "“ abravīt-“tatra kicitsaṃpariniṣpannannāsti“ |",
  "S04n276:335": "āha-“bhadanta śāriputra,",
  "S04n276:336": "evameva sarvadharmeṣvapariniṣpanneṣu ca māyānirmāṇasvabhāveṣu,",
  "S04n276:337": "tvaṃ 'yadi strībhāvāt syādvikāraḥ,",
  "S04n276:338": "kimaparādha ?",
  "S04n276:339": "' iti ( pṛcchan )",
  "S04n276:340": "-tat ki manyase ?“",
  "S04n276:341": "atha sā devyetādṛśādhiṣṭhānādhiṣṭhitā'bhūt,",
  "S04n276:342": "yathā śāriputraḥ sthaviro yādṛśa sā devī tādṛśā dṛśyate sma;",
  "S04n276:343": "sā devyapi yādṛśaḥ śāriputraḥ,",
  "S04n276:344": "sthavirastādṛśo dṛśyate sma |",
  "S04n276:345": "tataḥ sā śāriputrasya rūpamāpannā devī taṃ devīrūpāpannaṃ śāriputramevam-“bhadanta śāriputra,",
  "S04n276:346": "yadi strībhāvāt syādvikāraḥ,",
  "S04n276:347": "kimaparādha ?",
  "S04n276:348": "“ iti pṛcchati sma |",
  "S04n276:349": "devīrūpāpannaḥ śāriputra etadavocat-“mama puruṣarūpasyāntarhitasya,",
  "S04n276:350": "strīkāyāpanno yo vikārastanna jānāmi“ |",
  "S04n276:351": "āha-“yadi sthaviraḥ strīrūpāt prativikārasya samarthaḥ syāt ,",
  "S04n276:352": "sarvāḥ striyaḥ strībhāvāt parivarteran |",
  "S04n276:353": "yathā sthaviraḥ strī-( rūpe )",
  "S04n276:354": "dṛśyate, tathā sarvāḥ striyo'pi strīrūpeṣu dṛśyamānāḥ stryabhāvāt strīrūpeṣu dṛśyante |",
  "S04n276:355": "tato bhagavatā 'sarve dharmāḥ strīpuruṣābhāvā' iti saṃghāya bhāṣītam“ |",
  "S04n276:356": "atha sā devī tadadhiṣṭhānamutsṛjati sma,",
  "S04n276:357": "āyuṣmāṃśca śāriputraḥ punaḥ svarūpopasaṃhito'bhūt |",
  "S04n276:358": "atha sā devī śāriputrametadavocat-“bhadanta śāriputra,",
  "S04n276:359": "kva te strīputtalī ?“ abravīt-“( sā )",
  "S04n276:360": "mayā na ca kṛtā na cāpi vikṛtā |",
  "S04n276:361": "āha-“evameva sarvadharmā apyakṛtāścāvikṛtāḥ |",
  "S04n276:362": "yadakṛtaṃcāvikṛtaṃca-tadhi buddhavacam“ |",
  "S04n276:363": "abravīt-“devī,",
  "S04n276:364": "itaścyutvā kutropapatsyase ?",
  "S04n276:365": "“ āha-“yatra tathāgatanirmāṇānyutpadyante,",
  "S04n276:366": "tatrāhamapyupapatsye“ |",
  "S04n276:367": "abravīt-“tathāgatanirmāṇeṣu na bhavataścyutpattī“ |",
  "S04n276:368": "āha-“sarve dharmāśca tathaiva cyutyupattyapagatāḥ“ |",
  "S04n276:369": "abravīt-“devi,",
  "S04n276:370": "keva cireṇa tvaṃ bodhimabhisaṃbhotsyase ?",
  "S04n276:371": "“ āha- “yadā, sthavira,",
  "S04n276:372": "pṛthagjanadharmasaṃpanno bhaviṣyasi,",
  "S04n276:373": "tadā'pi bodhimabhisambuddhāmi“ |",
  "S04n276:374": "abravīt-“devi, ( yad-)",
  "S04n276:375": "ahaṃ pṛthagjanadharmasaṃpanno bhaveyam,",
  "S04n276:376": "tadasthānam“ |",
  "S04n276:377": "āha-“bhadanta śāriputra,",
  "S04n276:378": "evameva( yad- )",
  "S04n276:379": "ahamapi bodhimabhisaṃbudhyāmi,",
  "S04n276:380": "tadasthānam |",
  "S04n276:381": "tat kasya hetoḥ ?",
  "S04n276:382": "bodhirasthāne pratiṣṭhitā;",
  "S04n276:383": "ato'sthāne na kaścidabhisaṃbuddhati“ |",
  "S04n276:384": "śāriputraḥ sthaviro'vocat-“tathāgatenā'khyātam-'gaṃgānadīvālukāsamāstathāgatā abhisaṃbuddhāḥ,",
  "S04n276:385": "abhisaṃbudhyantyabhisaṃbhotsyanta' iti“ |",
  "S04n276:386": "devyāha- “bhadanta śāriputra,",
  "S04n276:387": "'atītānāgatapratyutpannā buddhā' iti tadhyakṣaragaṇanāsaṃketādhivacanam |",
  "S04n276:388": "atītānāgatapratyutpanneṣu buddheṣvabhūteṣu,",
  "S04n276:389": "bodhistryadhvasamatikrāntā |",
  "S04n276:390": "sthaviraḥ kim arhattvalābhī?",
  "S04n276:391": "“ abravīt- “aprāptihetorlābhī“ |",
  "S04n276:392": "āha- “evamevābhisaṃbodhyabhāvahetorabhisaṃbodhiḥ“ |",
  "S04n276:393": "tato licchavirvimalakīrtirāyuṣmantaṃ śāriputraṃ sthavirametadavocat-“bhadanta śāriputra,",
  "S04n276:394": "iyaṃ devī buddhānāṃ dvinavatikoṭinayutāni paryupāsya,",
  "S04n276:395": "abhijñājñānavikrīḍitā praṇidhānasaṃbhūtā kṣāntilābhinī,",
  "S04n276:396": "avaivartika- saṃprasthitā sattvaparipācanārthāya praṇidhānavaśena yatheṣṭaṃ tathā'vasthitā“ |"
}