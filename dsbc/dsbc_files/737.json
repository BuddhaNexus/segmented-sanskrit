{
    "737:0": "CHAPTER 24",
    "737:1": "SARVA-KULA-KALPA-GUHYA-VIDHI-VISTARA-TANTRA",
    "737:2": "atha vajrapāṇirmahābodhisatvaḥ sarvatathāgataguhyasiddhitantramudājahāra|",
    "737:3": "tatrādita eva sarvatathāgatottamasiddhiguhyatantraṃ|",
    "737:4": "buddhabodhisamādhintu bhāvayan susamāhitaḥ|",
    "737:5": "sukhena labhyate bodhiriti cintyāvabudhyatī-||",
    "737:6": "tyāha bhagavān sarvatathāgataḥ||",
    "737:7": "tatredaṃ tathāgatakulottamasiddhiguhyatantraṃ|",
    "737:8": "satvavajrāṃ hṛdi badhvā bhāryā me tvamiti priyā|",
    "737:9": "dṛḍhībhava iti prokte sarvamudrāstu sādhayet||1||",
    "737:10": "anena vidhiyogena asiddhāpi svakarmabhiḥ|",
    "737:11": "guhyabhāryāmiti proktvā sutarāṃ siddhimāpnuyād||",
    "737:12": "ityāha bhagavān satvavajraḥ||",
    "737:13": "tatredaṃ vajrakulottamasiddhiguhyatantraṃ|",
    "737:14": "yathā tathā hi kupito vajra-huṃ-kāramudrayā|",
    "737:15": "mārayan sarvabuddhāṃstu bhayāt siddhi[ndadaṅkared||",
    "737:16": "ityāha] bhagavān sarvatathāgatahuṅkāraḥ||",
    "737:17": "tatredaṃ padmakulottamasiddhiguhyatantraṃ|",
    "737:18": "samādhimudrāṃ sandhāya nirīkṣan vajradṛṣṭinā|",
    "737:19": "svadāraṃ paradāraṃ vā priyāṃ siddhimavāpnuyate-||",
    "737:20": "tyāha bhagavān padmarāgaḥ||",
    "737:21": "tatredaṃ maṇikulottamasiddhiguhyatantraṃ|",
    "737:22": "dvayendriyasamāpattyā sukhamagramiti brūvan|",
    "737:23": "svendriyaṃ sarvabuddhānāṃ niryātya laghu sidhyatī-||",
    "737:24": "tyāha bhagavān maṇirāgaḥ||",
    "737:25": "sarvakulottamasiddhiguhyatantraḥ||",
    "737:26": "atha vajrapāṇirmahābodhisatvaḥ sarvatathāgatasamayasiddhiguhyatantramudājahāra|",
    "737:27": "tatredaṃ tathāgatasamayasiddhiguhyatantraṃ|",
    "737:28": "samayastvamiti proktvā rāgayetsarvayoṣitaḥ|",
    "737:29": "ma virāgaya satvārthaṃ dhruvaṃ buddhāṃ sa rāgayed||",
    "737:30": "ityāha bhagavān mahāvairocanaḥ||",
    "737:31": "tatredaṃ tathāgatakulasamayasiddhiguhyatantraṃ|",
    "737:32": "rāgo hi nāvamantavyo rāgayetsarvayoṣitaḥ|",
    "737:33": "vajriṇo guhyasamayamidaṃ rakṣaṃstu sidhyatī-||",
    "737:34": "tyāha bhagavān vairocanaḥ||",
    "737:35": "tatredaṃ vajrakulasamayasiddhiguhyatantraṃ|",
    "737:36": "mārayanmārayellokaṃ kāyavākkarmasatkriyaiḥ|",
    "737:37": "hūṃ-kāraistu viśuddhyarthaṃ samayo hyarthasiddhida||",
    "737:38": "ityāha bhagavān trilokavijayaḥ|",
    "737:39": "tatredaṃ padmakulasamayasiddhiguhyatantraṃ|",
    "737:40": "rāgaḥ śuddhātmanāṃ śuddho hyaśuddhastīrthyayogināṃ|",
    "737:41": "śuddhātmanāṃ tu samayaṃ pālayan siddhimāpnuyād||",
    "737:42": "ityāha bhagavānavalokiteśvaraḥ||",
    "737:43": "tatredaṃ maṇikulasamayasiddhiguhyatantraṃ|",
    "737:44": "badhvā vajramaṇiṃ pūrvaṃ vajragarbhasamādhinā|",
    "737:45": "duṣṭānāṃ tu harannarthān samayaḥ siddhido bhaved||",
    "737:46": "i]tyāha bhagavān vajraratnaḥ||",
    "737:47": "sarvakulasamayasiddhiguhyavidhivistaratantraṃ||",
    "737:48": "atha vajrapāṇirmahābodhisatvaḥ sarvatathāgatadharmasiddhiguhyatantramudājahāra|",
    "737:49": "tatredaṃ tathāgatadharmasiddhiguhyatantraṃ|",
    "737:50": "svabhāvaśuddhiṃ dharmāṇāṃ bhāvayan susamāhitaḥ|",
    "737:51": "sarvakāryāṇi kurvan vai bodhīṃ siddhimavāpnute-||",
    "737:52": "tyāha bhagavān vajradhātuḥ||",
    "737:53": "tatredaṃ tathāgatakuladharmasiddhiguhyatantraṃ|",
    "737:54": "sarvasatvānurāgaśca viṣayeṣvavirāgitā|",
    "737:55": "rāmārāmaṇaśuddhistu guhyadharmaḥ susiddhida||",
    "737:56": "ityāha bhagavān vajraguhyaḥ||",
    "737:57": "tatredaṃ vajrakuladharmasiddhiguhyatantraṃ|",
    "737:58": "nāsāhuṃkārayogena sarvaduṣṭāṃstu mārayan|",
    "737:59": "sūkṣmavajrasamādhisthaḥ parāṃ siddhimavāpnuyād||",
    "737:60": "ityāha bhagavān dharmahuṃkāraḥ||",
    "737:61": "tatredaṃ padmakuladharmasiddhiguhyatantraṃ|",
    "737:62": "sūkṣmavajraprayogeṇa rāmayetsarvayoṣitaḥ|",
    "737:63": "dharmasiddhimavāpnoti vajradharmasamādhine-||",
    "737:64": "tyāha bhagavānavalokiteśvaraḥ|",
    "737:65": "tatredaṃ maṇikuladharmasiddhiguhyatantraṃ|",
    "737:66": "dvayendriyasamāpattyā sarvāśā paripūrayan|",
    "737:67": "yoṣitāṃ vā priyāṇāṃ vā siddhimāpnotyanuttarām|",
    "737:68": "ityāha bhagavān vajraratnaḥ||",
    "737:69": "sarvakuladharmasiddhiguhyavidhivistaratantraṃ||",
    "737:70": "atha vajrapāṇirmahābodhisatvaḥ sarvatathāgatakarmasiddhiguhyatantramudājahāra|",
    "737:71": "tatredaṃ tathāgatakarmasiddhiguhyatantraṃ|",
    "737:72": "vajrasatvasamādhistho buddhānusmṛtibhāvakaḥ|",
    "737:73": "strīkāyaṃ praviśanyonyā vaśīkuryāttu yoṣita||",
    "737:74": "ityāha bhagavān vairocanaḥ||",
    "737:75": "tatredaṃ tathāgatakulakarmasiddhiguhyatantraṃ|",
    "737:76": "vajrasatvasamādhistho bhagena praviśaṃstathā|",
    "737:77": "striyā kāye spharetsamyag niśceṣṭāmapi rāgayed||",
    "737:78": "ityāha bhagavān vajrarāgaḥ||",
    "737:79": "tatredaṃ vajrakulakarmasiddhiguhyatantraṃ|",
    "737:80": "vajrahuṃkāramudrāṃ vai badhvā tu susamāhitaḥ|",
    "737:81": "praviśaṃstu bhage kruddhaḥ manasā sa tu pātayed||",
    "737:82": "ityāha bhagavān vajrasamayaḥ||",
    "737:83": "tatredaṃ padmakulakarmasiddhiguhyatantraṃ|",
    "737:84": "dharmakarmamayīmudrāṃ badhvā padmasamādhinā|",
    "737:85": "bhagena praviśan rakṣedapi sarvāstu yoṣita||",
    "737:86": "ityāha bhagavān vajrapadmaḥ|",
    "737:87": "tatredaṃ maṇikulakarmasiddhiguhyatantraṃ|",
    "737:88": "karmavajramaṇiṃ badhvā vajraratnasamādhinā|",
    "737:89": "bhagena praviśan strīṇāṃ kṣaṇādāviśya nartatī-||",
    "737:90": "tyāha bhagavān vajraratnaḥ||",
    "737:91": "sarvakulakarmasiddhiguhyavidhivistaratantraṃ||",
    "737:92": "athavajrapāṇirmahābodhisatvaḥ sarvatathāgatamaṇḍalaśuddhisiddhiguhyatantramudājahāra|",
    "737:93": "tatredaṃ sarvatathāgatacakraśuddhisiddhiguhyatantraṃ bhavati|",
    "737:94": "dharmacakrasamākāraṃ kuryādvā guhyamaṇḍalaṃ|",
    "737:95": "mudrā bhāryā parivṛtaṃ tatra buddhanniveśayet||1||",
    "737:96": "praviṣṭvaiva hi tadguhyaṃ brūyādbuddhasya tatkṣaṇāt|",
    "737:97": "“bhāryā hyetāstava vibho dadasva mama sarvada”||2||",
    "737:98": "evaṃ brūvaṃstu sarveṣu kulamudrā nayeṣu ca|",
    "737:99": "guhyasiddhimavāpnoti buddhānāmasamatviṣām||3||",
    "737:100": "ityāha bhagavān buddhaḥ||",
    "737:101": "tatredaṃ tathāgatakulasarvamaṇḍalasiddhiguhyatantraṃ|",
    "737:102": "vajradhātupratīkāśaṃ maṇḍalaṃ tu samālikhet|",
    "737:103": "tathāgatakulānāṃ tu sarveṣāṃ paramannayaṃ||",
    "737:104": "[siddhikāmastvāśu] brūyātpravi[ṣṭaiva tanmaṇḍalaṃ]|",
    "737:105": "surate samayastvaṃhoḥ,",
    "737:106": "vajrasatvādya sidhya māṃ||2||",
    "737:107": "idaṃ japaṃstu hṛdayaṃ sādhayet sarvasiddhayaḥ|",
    "737:108": "[tatvacodanayoge]na tuṣṭaḥ sa tvāśu sidhyatī-||",
    "737:109": "tyāha bhagavān vajrasatvaḥ||",
    "737:110": "tatredaṃ vajrakulasarvamaṇḍalasiddhiguhyatantraṃ|",
    "737:111": "trilokavijayākāraṃ sarvavajrakulasya hi|",
    "737:112": "sarvamaṇḍalayogaṃ tu saṃlikheta vicakṣaṇaḥ||1||",
    "737:113": "taṃ praviṣṭvaiva śīghraṃ vai brūyātsiddhiṃ tu yācayan|",
    "737:114": "“rāgāttvamasi saṃbhūta”,",
    "737:115": "evaṃ sarveṣu sidhyatī-||2||",
    "737:116": "tyāha bhagavān vajrahuṃkāraḥ||",
    "737:117": "tatredaṃ padmakulamaṇḍalasiddhiguhyatantraṃ|",
    "737:118": "jagadvinayayogena sarvapadmakuleṣu vai|",
    "737:119": "maṇḍalāni likhetprajñastaṃ praviṣṭvaiva vāgvadet||1||",
    "737:120": "“rāgadharma mahāpadma prasidhya laghu me vibho”|",
    "737:121": "evamuktvā tu sarveṣu maṇḍaleṣu sa sidhyatī-||2||",
    "737:122": "tyāha bhagavānavalokiteśvaraḥ||",
    "737:123": "tatredaṃ maṇikulamaṇḍalasiddhiguhyatantraṃ|",
    "737:124": "sarvārthasiddhiyogena maṇḍalāni samālikhet|",
    "737:125": "mahāmaṇikulānāṃ tu taṃ praviṣṭvaiva vāgvadet||1||",
    "737:126": "“sarvābhiprāyasiddhīnāṃ rāgāśāsiddhiruttamā|",
    "737:127": "sidhya sidhya mahāsatva bhagavan sarvasiddhaye”||2||",
    "737:128": "evaṃ brūvaṃstu sarveṣu maṇḍaleṣu praveśataḥ|",
    "737:129": "mahāsiddhimavāpnoti pūjāguhyamanuttaraṃ||3||",
    "737:130": "tataḥ prabhṛti siddhātmā sādhayan siddhayaḥ sadā|",
    "737:131": "yadā na laghu siddhiḥ syāt sidhyante tatvacodanair||4||",
    "737:132": "ityāha bha[gavān vajrasatvaḥ||]",
    "737:133": "sarvakulamaṇḍalasiddhiguhyavidhivistaratantraṃ||",
    "737:134": "atha vajrapāṇirmahābodhisatvaḥ sarvatathāgatasarvamudrāguhyasiddhitantramudājahāra|",
    "737:135": "tatredaṃ tathāgatamudrāguhyasiddhitantraṃ|",
    "737:136": "tathāgatamahādevyaḥ priyāḥ sarvasukhapradāḥ|",
    "737:137": "satyānuparivartinyā vāssatyaiḥ sāpi tā yanna sidhyata||",
    "737:138": "ityāha bhagavān buddhaḥ||",
    "737:139": "tatredaṃ tathāgatakulamahāmudrāguhyasiddhitantraṃ|",
    "737:140": "mahāmudrāṃ tu vai badhvā yathāvadanupūrvaśaḥ|",
    "737:141": "idaṃ tatvaṃ rahasyaṃ ca vajravācā vadetvayaṃ||1||",
    "737:142": "vajrasatvaḥ svayamahaṃ tvamme bhāryā hṛdi sthitā|",
    "737:143": "sarvakāyaṃ pariṣvajya vajragarve samutkṣipa||2||",
    "737:144": "vajragarvā mahādevī tatvacodānurāgitā|",
    "737:145": "sarvakāye dṛḍhībhūtvā yathāvatsidhyate laghur||3||",
    "737:146": "ityāha bhagavān vajragarvāpatiḥ||",
    "737:147": "tatredaṃ vajrakulasamayamudrāguhyasiddhitantraṃ|",
    "737:148": "“sidhya sidhyādya samaye samayo'haṃ tvaṃ priyā mama”|",
    "737:149": "iti codanayā śīghramanuraktā prasidhyatī-||",
    "737:150": "tyāha bhagavān vajrasatvaḥ||",
    "737:151": "tatredaṃ padmakuladharmamudrāguhyasiddhitantraṃ|",
    "737:152": "“budhya budhya mahāsatvi bhāryā me tvamatipriyā”|",
    "737:153": "iti codanayā śīghramanuraktā tu sidhyatī-||",
    "737:154": "tyāha bhagavān vajradharmaḥ||",
    "737:155": "tatredaṃ maṇikulakarmamudrāguhyasiddhitantraṃ|",
    "737:156": "“sarvakarmakarī bhāryā tvaṃ me sidhyādya vajriṇi”|",
    "737:157": "iti codanayā śīghramanuraktā tu sidhyatī-||",
    "737:158": "tyāha bhagavānākāśagarbhaḥ||",
    "737:159": "sarvakulasarvamudrā[guhyasi]ddhividhivistaratantraṃ||",
    "737:160": "atha vajrapāṇirmahābodhisatvaḥ sarvatathāgatasamayaguhyasiddhitantramudājahāra|",
    "737:161": "tatredaṃ tathāga[tasamayagu]hyasiddhitantraṃ|",
    "737:162": "tīrthikānāṃ hitārthāya buddhabhāryā pragopitā|",
    "737:163": "lekhyā mudrā prayogeṇa iti vijñeya sidhyatī-||",
    "737:164": "tyāha bhagavān sarvatathāgata[samayaḥ||]",
    "737:165": "tatredaṃ tathāgatakulasamayaguhyasiddhitantraṃ|",
    "737:166": "sarvasatvamanovyāpī sarvasatvasukhapradaḥ|",
    "737:167": "sarvasatvapitā caiva kāmo'graḥ samayāgriṇām||",
    "737:168": "ityāhurbhagavantaḥ sarvatathāgatāḥ||",
    "737:169": "idaṃ tatsarvabuddhānāṃ rahasyaṃ paramādbhutaṃ|",
    "737:170": "vijñeya śraddadhacchddho duḥsādhyo'pi hi sidhyatī-||",
    "737:171": "tyāha bhagavān vajradharaḥ||",
    "737:172": "tatredaṃ vajrakulasamayaguhyasiddhitantraṃ|",
    "737:173": "rāgaśuddhyai viraktānāṃ tīrthyadṛṣṭikṛtātmanāṃ|",
    "737:174": "māraṇaṃ samayaṃ tvagramidaṃ vijñeyaṃ sidhyatī-||",
    "737:175": "tyāha bhagavān vajradharaḥ||",
    "737:176": "tatredaṃ padmakulasamayaguhyasiddhitantraṃ|",
    "737:177": "mahābhūtodbhavaṃ sarvaṃ,",
    "737:178": "kathaṃ tvaśucirucyate ?|",
    "737:179": "tīrthikānāṃ vināśāya dhruvaṃ siddhimavāpnuyād||",
    "737:180": "ityāha bhagavān vajranetraḥ||",
    "737:181": "tatredaṃ maṇikulasamayaguhyasiddhitantraṃ|",
    "737:182": "strīprasaṅgāttu ratnānāṃ saṃcayaḥ kriyate yadā|",
    "737:183": "striyo hyanuttaraṃ ratnamiti cintyate sidhyatī-||",
    "737:184": "tyāha bhagavānājñākaraḥ||",
    "737:185": "sarvakalasamayaguhyasiddhividhivistaratantraḥ||",
    "737:186": "atha vajrapāṇirmahābodhisatvaḥ sarvatathāgatapūjāguhyasiddhitantramudājahāra|",
    "737:187": "tatrāyaṃ tathāgatapūjāguhyasiddhitantraḥ|",
    "737:188": "strībhiḥ parivṛto bhūtvā parihāsakriyā sukhaṃ|",
    "737:189": "niryātya buddhapūjāyāṃ pūjāsiddhimavāpnuyād||",
    "737:190": "ityāha bhagavān buddhaḥ|",
    "737:191": "tatredaṃ tathāgatakulapūjāguhyasiddhitantraṃ|",
    "737:192": "surataśramakhinnastu tatsaukhyaṃ suratodbhavaṃ|",
    "737:193": "catuḥpraṇāme pūjāyāṃ niryātya laghu sidhyatī-||",
    "737:194": "tyāha bhagavān vajradharaḥ||",
    "737:195": "tatredaṃ vajrakulapūjāguhyasiddhitantraṃ|",
    "737:196": "huṃkārasamayāṃ badhvā pariṣvajya striyaṃ janaṃ|",
    "737:197": "tatpariṣvaṅgasaukhyaṃ tu niryātya hi sa sidhyatī-||",
    "737:198": "tyāha bhagavān vajrahuṃkāraḥ||",
    "737:199": "tatredaṃ padmakulapūjāguhyasiddhitantraṃ|",
    "737:200": "lokeśvaramahaṃ bhāvya priyāvaktraṃ nirīkṣanvai|",
    "737:201": "tannirīkṣaṇasauravyaṃ tu niryātya hi sa sidhyatī-|",
    "737:202": "tyāha bhagavān padmanetraḥ||",
    "737:203": "tatredaṃ maṇikulapūjāguhyasiddhitantraṃ|",
    "737:204": "karmamudrādharo bhūtvā sarvābharaṇabhūṣitaḥ|",
    "737:205": "striyaṃ pariṣvajya pūjāyāṃ vibhūtiṃ niryātya sidhyatī-||",
    "737:206": "tyāha bhagavān vajraratnaḥ||",
    "737:207": "sarvakulapūjāguhyasiddhividhivistaratantraṃ||",
    "737:208": "atha vajrapāṇirmahābodhisatvaḥ sarvatathāgataguhyapūjāsiddhitantramudājahāra|",
    "737:209": "tatredaṃ tathāgataguhyapūjāsiddhitantraṃ|",
    "737:210": "ramayan paradārāṇi yathā[ka]ścinna vedayet|",
    "737:211": "bhāvayan buddhamātmānaṃ pūjayā siddhimāpnuyād||",
    "737:212": "ityāha bhagavān buddhaḥ||",
    "737:213": "tatredaṃ tathāgata[kula]guhyapūjāsiddhitantraṃ|",
    "737:214": "vajralāsyāṃ samādhāya vajramālāṃ tu bandha[yet]|",
    "737:215": "vajragītāṃ tato badhvā pūjayed vajranṛtyayā||",
    "737:216": "kā[maratyābhiṣekā]gryā nṛtyagītasukhātsukhaṃ|",
    "737:217": "nānyadasti hi teneyaṃ guhyapūjā niruttarā||",
    "737:218": "tatredaṃ vajrakulaguhyapūjāsiddhitantraṃ||",
    "737:219": "yathāvad vidhiyogena pūja[yed] guhyapūjayā|",
    "737:220": "trilokavijayaṃ bhāvya pūjāsiddhima vāpnuyād||",
    "737:221": "ityāha bhagavān vajraguhyaḥ|",
    "737:222": "tatredaṃ padmakulaguhyapūjāsiddhitantraṃ|",
    "737:223": "ya[thāvad gu]hyayogena dharmamudrā supūjayan|",
    "737:224": "jagadvinayamudrāsthaḥ pūjāsiddhimavāpnute-||",
    "737:225": "tyāha bhagavānavalokiteśvaraḥ||",
    "737:226": "tatredaṃ maṇikulaguhyapūjāsiddhitantraṃ|",
    "737:227": "yathāvad guhyayogena karmamudrā susādhayan|",
    "737:228": "sarvārthasiddhiyogena pūjāsiddhimavāpnute-||",
    "737:229": "tyāha bhagavān vajragarbhaḥ||",
    "737:230": "sarvakulaguhyapūjāvidhivistaratantraṃ||",
    "737:231": "atha bhagavān vajrapāṇirmahābodhisatvaḥ sarvatathāgatakulodghāṭanaguhyasiddhitantramudājahāra|",
    "737:232": "tatredaṃ tathāgatatatvotpattisiddhiguhyatantraṃ|",
    "737:233": "samādhijñānasaṃbhūtaṃ buddhatvaṃ hi samāsataḥ|",
    "737:234": "satvarāgaṇayogena śīghramāpnotyanuttaram||",
    "737:235": "ityāha bhagavāṃstathāgataḥ|",
    "737:236": "tatredaṃ tathāgatakulamahātattvodghāṭanasiddhiguhyatantraṃ|",
    "737:237": "anādinidhanaḥ satvaḥ ākāśotpattilakṣaṇaḥ|",
    "737:238": "samantabhadraḥ sarvātmā kāmaḥ sarvajagatpatiḥ||1||",
    "737:239": "yaccittaṃ sarvasatvānāṃ dṛḍhatvāt satvanucyate|",
    "737:240": "samādhānād vajrasamo niścayairyāti vajratāṃ||2||",
    "737:241": "satvādhiṣṭhānayogena vajrasatvaḥ punarbhavet|",
    "737:242": "sa eva bhagavān satvo vajrakāyastathāgataḥ||3||",
    "737:243": "svacittaprativedhādibuddhabodhiryathāvidhi|",
    "737:244": "sa eva bhagavān sarvatathāgatakulaṃ bhaved||",
    "737:245": "ityāha bhagavānanādinidhanasatvaḥ||",
    "737:246": "tathāgatakulaṃ saiva saiva vajrakulaṃ smṛtaṃ|",
    "737:247": "saiva padmakulaṃ śuddhaṃ saivoktaṃ maṇisatkulam||",
    "737:248": "ityāha bhagavān sarvatathāgatacakraḥ||",
    "737:249": "sarvakulotpādanaguhyasiddhividhivistaratantraṃ||",
    "737:250": "atha vajrapāṇirmahābodhisatvaḥ sarvatathāgatamudrācinhābhidhānasiddhiguhyatantramudājahāra|",
    "737:251": "tatredaṃ tathāgatacinhābhidhānasiddhiguhyatantraṃ bhavati|",
    "737:252": "sa eva bhagavān satvo vajrasatvo hṛdi sthitaḥ|",
    "737:253": "samādhānātsamādhistu buddhabodhiprasādhaka||",
    "737:254": "ityāha bhagavān buddhaḥ||",
    "737:255": "tatredaṃ tathākulacinhābhidhānasiddhiguhyatantraṃ|",
    "737:256": "vajraṃ suprativedhatvādaṅkuśaṃ grahamocakaḥ|",
    "737:257": "sūkṣmavedhitayā vāṇaṃ sādhukārastu tuṣṭitaḥ||1||",
    "737:258": "ratnastu racanāduktaḥ sūryastejo vidhānataḥ|",
    "737:259": "ketuḥ samucchrayaḥ proktaḥ smito hāsastu kīrtitaḥ||2||",
    "737:260": "rāgaśuddhitayā padmaṃ kośaḥ kleśāricchedanāt|",
    "737:261": "cakro maṇḍalayogāttu vāglāpājjapanucyate||3||",
    "737:262": "sarvavajraṃ tu viśvatvād varmadurbhedyayogataḥ|",
    "737:263": "daṃṣṭrā bhīṣaṇayogāttu bandho mudrāprayogataḥ||4||",
    "737:264": "yathā hi bhagavān śāśvo vajrasatvastu sarvagaḥ|",
    "737:265": "tathā vajrāṃ tu cihnādi bhāvayanniti sidhyatī-||",
    "737:266": "tyāha bhagavān sarvatathāgatacinhaḥ|",
    "737:267": "sarvakulacihnābhidhānasiddhiguhyatantraṃ||",
    "737:268": "atha vajrapāṇirmahābodhisatvaḥ sarvatathāgatamudrābandhotpattisiddhiguhyatantramudājahāra|",
    "737:269": "tatredaṃ tathāgatamudrābandhotpattisiddhiguhyatantraṃ|",
    "737:270": "badhvā vai vajraparyaṅkaṅkarābhyāṃ vajrabandhataḥ|",
    "737:271": "vajrasatvasamādhisthaḥ śīghraṃ buddhatvamāpnuyād||",
    "737:272": "ityāha bhagavān buddhaḥ||",
    "737:273": "[tatre]daṃ tathāgatakulamudrābandhotpattisiddhiguhyatantraṃ|",
    "737:274": "yathā rājñāṃ svamudrābhiḥ mudryate rājaśāsanaṃ|",
    "737:275": "mahātmanāṃ svamudrābhirāmudryante tathā janāḥ||1||",
    "737:276": "kāyavākcittavajrāṇāṃ pratibimbaprayogataḥ|",
    "737:277": "mahātmanāṃ mahāmudrā iti vijñāya sidhyatī-||2||",
    "737:278": "tyāha bhagavān mahāmudraḥ||",
    "737:279": "tatredaṃ vajrakulamudrābandhotpattisiddhiguhyatantraṃ|",
    "737:280": "yathāhi samayaistīvraiḥ kaścidbandho bhavejjanaḥ|",
    "737:281": "anatikramaṇīyaistu tathā sarvatathāgatāḥ||1||",
    "737:282": "baddhā hi vajrabandhāgryamudrāsamayabandhanaiḥ|",
    "737:283": "nātikramantyāmaraṇāditi vijñāya sidhyatī-||",
    "737:284": "tyāha bhagavān vajrasamayaḥ||",
    "737:285": "tatredaṃ dharmakulamudrābandhotpattisiddhiguhyatantraṃ|",
    "737:286": "anatikramaṇīyā hi vajravāssarvaśo jinaiḥ|",
    "737:287": "ayaṃ bandha iti jñātvā dharmamasya prasidhyatī-||",
    "737:288": "tyāha bhagavān vajradharmaḥ||",
    "737:289": "tatredaṃ karmakulamudrābandhotpattisiddhiguhyatantraṃ|",
    "737:290": "anatikramaṇīyā hi vajrājñā karmabhūri ca|",
    "737:291": "ājñāvatastu tatkarma vijñāya laghu sidhyatī-||",
    "737:292": "tyāha bhagavān vajraḥ||",
    "737:293": "sarvakulamudrābandhotpattisiddhividhivistaraguhyatantraṃ||",
    "737:294": "atha khalu bhagavān vajrapāṇiṃ mahābodhisatvamevamāha|",
    "737:295": "“idamapi mayā bhagavan parigṛhītamadhiṣṭhitaṃ ce-” ti||",
    "737:296": "atha sarvatathāgatāḥ punaḥ samājamāgamya vajrapāṇaye sarvatathāgatadhipataye sādhukārāṇyadaduḥ||",
    "737:297": "sādhu te vajrasatvāya vajraratnāya sādhu te|",
    "737:298": "vajradharmāya te sādhu sādhu te vajrakarmaṇe||",
    "737:299": "subhāṣitamidaṃ sūtraṃ vajrayānamanuttaraṃ|",
    "737:300": "sarvatathāgataṃ guhyaṃ mahāyānābhisaṃgraham|| iti||",
    "737:301": "sarvatathāgatatatvasaṃgrahātsarvakulakalpaguhyavidhivistaratantraṃ samāptaṃ||"
}