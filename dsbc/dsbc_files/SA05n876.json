{
  "SA05n876:0": "śākyasiṃhastotram",
  "SA05n876:1": "śaṅkarakṛtam",
  "SA05n876:2": "namāmi saugataṃ jinaṃ lasadvitānabhāsuraṃ",
  "SA05n876:3": "sahasrasūryarociṣaṃ śaśāṅkakoṭinirmalam |",
  "SA05n876:4": "saromakūpamaṇḍalād galatsusūkṣmatejasaṃ",
  "SA05n876:5": "sahasranemicakritāṅaghripadmapāṇiśobhitam || 1 ||",
  "SA05n876:6": "bhajāmi lokanāyakaṃ saśokaroganāśakaṃ",
  "SA05n876:7": "jarāvipadbhayāntakaṃ bhavārṇavapratārakam |",
  "SA05n876:8": "prabuddhapaṅkajāsanaṃ vibuddhabodhikānanaṃ",
  "SA05n876:9": "trilokalokabhāvanaṃ jagattrayaikapāvanam || 2 ||",
  "SA05n876:10": "namo'stu pālabhuṃ jagaccakāra janma mānavaṃ",
  "SA05n876:11": "viśuddhaśākyasāgare payonidhau śaśī yathā |",
  "SA05n876:12": "kathāsudhāmayo'dhunā vinodayiṣyate bhavān",
  "SA05n876:13": "trijālamohatāmasaṃ vināśayiṣyase jvalan || 3 ||",
  "SA05n876:14": "sthitāya bodhimaṇḍape hitāya lokasaṃcayaṃ",
  "SA05n876:15": "jitāya mārasainyakaṃ śritāya sattṛṇāsanam |",
  "SA05n876:16": "sujātaśākyabhūpateryutāya pāramārthakai-",
  "SA05n876:17": "rvṛtāya bodhisaṃvarairnamo'stu dharmarāja te || 4 ||",
  "SA05n876:18": "bhajāmi bhavyabhāvukaṃ bhavasya bhāvabhedakaṃ",
  "SA05n876:19": "subodhivaibhavodbhavaṃ subhādrikaṃ śubhāṃśikam |",
  "SA05n876:20": "bhavaughabhārabhedituṃ babhāra bodhibhārakaṃ",
  "SA05n876:21": "subhadrabhānubhāsvaraṃ subhāvitaṃ śubhāvaham || 5 ||",
  "SA05n876:22": "jinendramūlamaṇḍape lasadvitānavistṛte",
  "SA05n876:23": "sahasrakalpapādape prapūrṇavatpraśobhite |",
  "SA05n876:24": "hiraṇyaratnavedikākuśāsanasthitaṃ vibhuṃ",
  "SA05n876:25": "namāmi śākyasaugataṃ tathāgataṃ varaṃ sadā || 6 ||",
  "SA05n876:26": "paṭhanti ye jināgrato vinirmitaṃ hareṇa tat",
  "SA05n876:27": "supañcapañcacāmaraṃ trikālameva maṅgalam |",
  "SA05n876:28": "sukīrtidharmasaṃyutaṃ lasanti sapta vṛddhayo",
  "SA05n876:29": "vrajanti te sukhāvatīṃ sukhena satsukhāvatīm || 7 ||",
  "SA05n876:30": "śaṅkarakṛtaṃ śrīśākyasiṃhastotraṃ samāptam |"
}