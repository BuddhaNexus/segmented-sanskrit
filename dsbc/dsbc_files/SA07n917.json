{
  "SA07n917:0": "CANTO III",
  "SA07n917:1": "tataḥ kadācinmṛduśādvalāni",
  "SA07n917:2": "puṃskokilonnāditapādapāni |",
  "SA07n917:3": "śuśrāva padmākaramaṇḍitāni",
  "SA07n917:4": "gītairnibaddhāni sa kānanāni ||1 ||",
  "SA07n917:5": "śrutvā tataḥ strījanavallabhānāṃ",
  "SA07n917:6": "manojñabhāvaṃ purakānanānām |",
  "SA07n917:7": "bahiḥprayāṇāya cakāra buddhi-",
  "SA07n917:8": "mantargṛhe nāga ivāvarūddhaḥ ||2 ||",
  "SA07n917:9": "tato nṛpastasya niśamya bhāvaṃ",
  "SA07n917:10": "putrābhidhānasya manorathasya |",
  "SA07n917:11": "snehasya lakṣmyā vayasaśca yogyā-",
  "SA07n917:12": "mājñāpayāmāsa vihārayātrām ||3 ||",
  "SA07n917:13": "nivartayāmāsa ca rājamārge",
  "SA07n917:14": "saṃpātamārtasya pṛthagjanasya |",
  "SA07n917:15": "mā bhūtkumāraḥ sukumāracittaḥ",
  "SA07n917:16": "saṃvignacetā iti manyamānaḥ ||4 ||",
  "SA07n917:17": "pratyaṅgahīnānvikalendriyāṃśca",
  "SA07n917:18": "jīrṇāturādīn kṛpaṇāṃśca dikṣu |",
  "SA07n917:19": "tataḥ samutsārya pareṇa sāmnā",
  "SA07n917:20": "śobhāṃ parāṃ rājapathasya cakuḥ ||5 ||",
  "SA07n917:21": "tataḥ kṛte śrīmati rājamārge",
  "SA07n917:22": "śrīmānvinītānucaraḥ kumāraḥ |",
  "SA07n917:23": "prāsādapṛṣṭhādavatīrya kāle",
  "SA07n917:24": "kṛtābhyanujño nṛpamabhyagacchat ||6 ||",
  "SA07n917:25": "atho narendraḥ sutamāgatāśruḥ",
  "SA07n917:26": "śirasyupāghrāya ciraṃ nirīkṣya |",
  "SA07n917:27": "gaccheti cājñāpayati sma vācā",
  "SA07n917:28": "snehānna cainaṃ manasā mumoca ||7 ||",
  "SA07n917:29": "tataḥ sa jāmbūnadabhāṇḍabhṛdbhi-",
  "SA07n917:30": "ryuktaṃ caturbhirnibhṛtaisturaṅgaiḥ |",
  "SA07n917:31": "aklībavidvacchuciraśmidhāraṃ",
  "SA07n917:32": "hiraṇmayaṃ syandanamāruroha ||8 ||",
  "SA07n917:33": "tataḥ prakīrṇojjvalapuṣpajālaṃ",
  "SA07n917:34": "viṣaktamālyaṃ pracalatpatākam |",
  "SA07n917:35": "mārgaṃ prapede sadṛśānuyātra-",
  "SA07n917:36": "ścandraḥ sanakṣatra ivāntarīkṣam ||9 ||",
  "SA07n917:37": "kautūhalātsphītataraiśca netrai-",
  "SA07n917:38": "rnīlotpalārdhairiva kīryamāṇam |",
  "SA07n917:39": "śanaiḥ śanai rājapathaṃ jagāhe",
  "SA07n917:40": "pauraiḥ samantādabhivīkṣyamāṇaḥ ||10 ||",
  "SA07n917:41": "taṃ tuṣṭuvuḥ saumyaguṇena keci-",
  "SA07n917:42": "dvavandire dīptatayā tathānye |",
  "SA07n917:43": "saumukhyatastu śriyamasya keci-",
  "SA07n917:44": "dvaipulyamāśaṃsiṣurāyuṣaśca ||11 ||",
  "SA07n917:45": "niḥsṛtya kubjāśca mahākulebhyo",
  "SA07n917:46": "vyūhāśca kairātakavāmanānām |",
  "SA07n917:47": "nāryaḥ kṛśebhyaśca niveśanebhyo",
  "SA07n917:48": "devānuyānadhvajavatpraṇemuḥ ||12 ||",
  "SA07n917:49": "tataḥ kumāraḥ khalu gacchatīti",
  "SA07n917:50": "śrutvā striyaḥ preṣyajanātpravṛttim |",
  "SA07n917:51": "didṛkṣayā harmyatalāni jagmu-",
  "SA07n917:52": "rjanena mānyena kṛtābhyanujñāḥ ||13 ||",
  "SA07n917:53": "tāḥ srastakāñcīguṇavighnitāśca",
  "SA07n917:54": "suptaprabuddhākulalocanāśca |",
  "SA07n917:55": "vṛttāntavinyastavibhūṣaṇāśca",
  "SA07n917:56": "kautūhalenānibhṛtāḥ parīyuḥ ||14 ||",
  "SA07n917:57": "prāsādasopānatalapraṇādaiḥ",
  "SA07n917:58": "kāñcīravairnūpuranisvanaiśca |",
  "SA07n917:59": "vitrāsayantyo gṛhapakṣisaṅghā-",
  "SA07n917:60": "nanyonyavegāṃśca samākṣipantyaḥ ||15 ||",
  "SA07n917:61": "kāsāṃcidāsāṃ tu varāṅganānāṃ",
  "SA07n917:62": "jātatvarāṇāmapi sotsukānām |",
  "SA07n917:63": "gatiṃ gurutvājjagṛhurviśālāḥ",
  "SA07n917:64": "śroṇīrathāḥ pīnapayodharāśca ||16 ||",
  "SA07n917:65": "śīghraṃ samarthāpi tu gantumanyā",
  "SA07n917:66": "gatiṃ nijagrāha yayau na tūrṇam |",
  "SA07n917:67": "hriyāpragalbhā vinigūhamānā",
  "SA07n917:68": "rahaḥprayuktāni vibhūṣaṇāni ||17 ||",
  "SA07n917:69": "parasparotpīḍanapiṇḍitānāṃ",
  "SA07n917:70": "saṃmardasaṃkṣobhikuṇḍalānām |",
  "SA07n917:71": "tāsāṃ tadā sasvanabhūṣaṇānāṃ",
  "SA07n917:72": "vātayaneṣvapraśamo babhūva ||18 ||",
  "SA07n917:73": "vātāyanebhyastu viniḥsṛtāni",
  "SA07n917:74": "parasparāyāsitakuṇḍalāni |",
  "SA07n917:75": "strīṇāṃ virejurmukhapaṅkajāni",
  "SA07n917:76": "saktāni harmyeṣviva paṅkajāni ||19 ||",
  "SA07n917:77": "tato vimānairyuvatīkarālaiḥ",
  "SA07n917:78": "kautūhalodghāṭitavātayānaiḥ |",
  "SA07n917:79": "śrīmatsamantānnagaraṃ babhāse",
  "SA07n917:80": "viyadvimānairiva sāpsarobhiḥ ||20 ||",
  "SA07n917:81": "vātāyanānāmaviśālabhāvā-",
  "SA07n917:82": "danyonyagaṇḍārpitakuṇḍalānām |",
  "SA07n917:83": "mukhāni rejuḥ pramodottamānāṃ",
  "SA07n917:84": "baddhāḥ kalāpā iva paṅkajānām ||21 ||",
  "SA07n917:85": "taṃ tāḥ kumāraṃ pathi vīkṣamāṇāḥ",
  "SA07n917:86": "striyo babhurgāmiva gantukāmāḥ |",
  "SA07n917:87": "ūrdhvonmukhāścainamudīkṣamāṇā",
  "SA07n917:88": "narā babhurdyāmiva gantukāmāḥ ||22 ||",
  "SA07n917:89": "dṛṣṭvā ca taṃ rājasutaṃ striyastā",
  "SA07n917:90": "jājvalyamānaṃ vapuṣā śriyā ca |",
  "SA07n917:91": "dhanyāsya bhāryeti śanairavoca-",
  "SA07n917:92": "ñśuddhairmanobhiḥ khalu nānyabhāvāt ||23 ||",
  "SA07n917:93": "ayaṃ kila vyāyatapīnabāhū",
  "SA07n917:94": "rūpeṇa sākṣādiva puṣpaketuḥ |",
  "SA07n917:95": "tyaktvā śriyaṃ dharmamupaiṣyatīti",
  "SA07n917:96": "tasmin hi tā gauravameva cakruḥ ||24 ||",
  "SA07n917:97": "kīrṇa tathā rājapathaṃ kumāraḥ",
  "SA07n917:98": "paurairvinītaiḥ śucidhīraveṣaiḥ |",
  "SA07n917:99": "tatpūrvamālokya jaharṣa kiṃci-",
  "SA07n917:100": "nmene punarbhāvamivātmanaśca ||25 ||",
  "SA07n917:101": "puraṃ tu tatsvargamiva prahṛṣṭaṃ",
  "SA07n917:102": "śuddhādhivāsāḥ samavekṣya devāḥ |",
  "SA07n917:103": "jīrṇaṃ naraṃ nirmamire prayātuṃ",
  "SA07n917:104": "saṃcodanārthaṃ kṣitipātmajasya ||26 ||",
  "SA07n917:105": "tataḥ kumāro jarayābhibhūtaṃ",
  "SA07n917:106": "dṛṣṭvā narebhyaḥ pṛthagākṛtiṃ tam |",
  "SA07n917:107": "uvāca saṃgrāhakamāgatāstha-",
  "SA07n917:108": "statraiva niṣkampaniviṣṭadṛṣṭiḥ ||27 ||",
  "SA07n917:109": "ka eṣa bhoḥ sūta naro'bhyupetaḥ",
  "SA07n917:110": "keśaiḥ sitairyaṣṭiviṣaktahaṣṭaḥ |",
  "SA07n917:111": "bhrūsaṃvṛtākṣaḥ śithilānatāṅgaḥ",
  "SA07n917:112": "kiṃ vikriyaiṣā prakṛtiryadṛcchā ||28 ||",
  "SA07n917:113": "ityevamuktaḥ sa rathapraṇetā",
  "SA07n917:114": "nivedayāmāsa nṛpātmajāya |",
  "SA07n917:115": "saṃrakṣyamapyarthamadoṣadarśī",
  "SA07n917:116": "taireva devaiḥ kṛtabuddhimohaḥ ||29 ||",
  "SA07n917:117": "rūpasya hantrī vyasanaṃ balasya",
  "SA07n917:118": "śokasya yonirnidhana ratīnām |",
  "SA07n917:119": "nāśaḥ smṛtīnāṃ ripurindriyāṇā-",
  "SA07n917:120": "meṣā jarā nāma yayaiṣa bhagnaḥ ||30 ||",
  "SA07n917:121": "pītaṃ hyanenāpi payaḥ śiśutve",
  "SA07n917:122": "kālena bhūyaḥ parisṛptamurvyām |",
  "SA07n917:123": "krameṇa bhūtvā ca yuvā vapuṣmān",
  "SA07n917:124": "krameṇa tenaiva jarāmupetaḥ ||31 ||",
  "SA07n917:125": "ityevamukte calitaḥ sa kiṃci-",
  "SA07n917:126": "drājātmajaḥ sūtamidaṃ babhāṣe |",
  "SA07n917:127": "kimeṣa doṣo bhavitā mamāpī-",
  "SA07n917:128": "tyasmai tataḥ sārathirabhyuvāca ||32 ||",
  "SA07n917:129": "āyuṣmato'pyeṣa vayaḥprakarṣo",
  "SA07n917:130": "niḥsaṃśayaṃ kālavaśena bhāvī |",
  "SA07n917:131": "evaṃ jarāṃ rūpavināśayitrīṃ",
  "SA07n917:132": "jānāti caivecchati caiva lokaḥ ||33 ||",
  "SA07n917:133": "tataḥ sa pūrvāśayaśuddhabuddhi-",
  "SA07n917:134": "rvistīrṇakalpācitapuṇyakarmā |",
  "SA07n917:135": "śrutvā jarāṃ savivije mahātmā",
  "SA07n917:136": "mahāśanerghoṣamivāntike gauḥ ||34 ||",
  "SA07n917:137": "niḥśvasya dīrghaṃ svaśiraḥ prakampya",
  "SA07n917:138": "tasmiṃśca jīrṇe viniveśya cakṣuḥ |",
  "SA07n917:139": "tāṃ caiva dṛṣṭvā janatāṃ saharṣāṃ",
  "SA07n917:140": "vākyaṃ sa saṃvigna idaṃ jagāda ||35 ||",
  "SA07n917:141": "evaṃ jarā hanti ca nirviśeṣaṃ",
  "SA07n917:142": "smṛtiṃ ca rūpaṃ ca parākramaṃ ca |",
  "SA07n917:143": "na caiva saṃvegamupaiti lokaḥ",
  "SA07n917:144": "pratyakṣato'pīdṛśamīkṣamāṇaḥ ||36 ||",
  "SA07n917:145": "evaṃ gate sūta nivartayāśvān",
  "SA07n917:146": "śīghraṃ gṛhāṇyeva bhavānprayātu |",
  "SA07n917:147": "udyānabhūmau hi kuto ratirme",
  "SA07n917:148": "jarābhaye cetasi vartamāne ||37 ||",
  "SA07n917:149": "athājñayā bhartusutasya tasya",
  "SA07n917:150": "nivartayāmāsa rathaṃ niyantā |",
  "SA07n917:151": "tataḥ kumāro bhavanaṃ tadeva",
  "SA07n917:152": "cintāvaśaḥ śūnyamiva prapede ||38 ||",
  "SA07n917:153": "yadā tu tatraiva na śarma lebhe",
  "SA07n917:154": "jarā jareti praparīkṣamāṇaḥ |",
  "SA07n917:155": "tato narendrānumataḥ sa bhūyaḥ",
  "SA07n917:156": "krameṇa tenaiva bahirjagāma ||39 ||",
  "SA07n917:157": "athāparaṃ vyādhiparītadehaṃ",
  "SA07n917:158": "ta eva devāḥ sasṛjurmanuṣyam |",
  "SA07n917:159": "dṛṣṭvā ca taṃ sārathimābabhāṣe",
  "SA07n917:160": "śauddhodanistadgatadṛṣṭireva ||40 ||",
  "SA07n917:161": "sthūlodaraḥ śvāsacalaccharīraḥ",
  "SA07n917:162": "srastāṃsabāhuḥ kṛśapāṇḍugātraḥ |",
  "SA07n917:163": "ambeti vācaṃ karuṇaṃ bruvāṇaḥ",
  "SA07n917:164": "paraṃ samāśritya naraḥ ka eṣaḥ ||41 ||",
  "SA07n917:165": "tato'bravītsārathirasya saumya",
  "SA07n917:166": "dhātuprakopaprabhavaḥ pravṛddhaḥ |",
  "SA07n917:167": "rogābhidhānaḥ sumahānanarthaḥ",
  "SA07n917:168": "śakto'pi yenaiṣa kṛto'svatantraḥ ||42 ||",
  "SA07n917:169": "ityūcivān rājasutaḥ sa bhūya-",
  "SA07n917:170": "staṃ sānukampo naramīkṣamāṇaḥ |",
  "SA07n917:171": "asyaiva jāto pṛthageṣa doṣaḥ",
  "SA07n917:172": "sāmānyato rogabhayaṃ prajānām ||43 ||",
  "SA07n917:173": "tato babhāṣe sa rathapraṇetā",
  "SA07n917:174": "kumāra sādhāraṇa eṣa doṣaḥ |",
  "SA07n917:175": "evaṃ hi rogaiḥ paripīḍyamāno",
  "SA07n917:176": "rujāturo harṣamupaiti lokaḥ ||44 ||",
  "SA07n917:177": "iti śrutārthaḥ sa viṣaṇṇacetāḥ",
  "SA07n917:178": "prāvepatāmbūrmigataḥ śaśīva |",
  "SA07n917:179": "idaṃ ca vākyaṃ karuṇāyamānaḥ",
  "SA07n917:180": "provāca kiṃcinmṛdunā svareṇa ||45 ||",
  "SA07n917:181": "idaṃ ca rogavyasanaṃ prajānāṃ",
  "SA07n917:182": "paśyaṃśca viśrambhamupaiti lokaḥ |",
  "SA07n917:183": "vistīrṇamajñānamaho narāṇāṃ",
  "SA07n917:184": "hasanti ye rogabhayairamuktāḥ ||46 ||",
  "SA07n917:185": "nivartyatāṃ sūta bahiḥprayāṇā-",
  "SA07n917:186": "nnarendrasadmaiva rathaḥ prayātu |",
  "SA07n917:187": "śrutvā ca me rogabhayaṃ ratibhyaḥ",
  "SA07n917:188": "pratyāhataṃ saṃkucatīva cetaḥ ||47 ||",
  "SA07n917:189": "tato nivṛttaḥ sa nivṛttaharṣaḥ",
  "SA07n917:190": "pradhyānayuktaḥ praviveśa veśma |",
  "SA07n917:191": "taṃ dvistathā prekṣya ca saṃnivṛttaṃ",
  "SA07n917:192": "paryeṣaṇaṃ bhūmipatiścakāra ||48 ||",
  "SA07n917:193": "śrutvā nimittaṃ tu nivartanasya",
  "SA07n917:194": "saṃtyaktamātmānamanena mene |",
  "SA07n917:195": "mārgasya śaucādhikṛtāya caiva",
  "SA07n917:196": "cukrośa ruṣṭo'pi ca nogradaṇḍaḥ ||49 ||",
  "SA07n917:197": "bhūyaśca tasmai vidadhe sutāya",
  "SA07n917:198": "viśeṣayuktaṃ viṣayapracāram |",
  "SA07n917:199": "calendriyatvādapi nāma sakto",
  "SA07n917:200": "nāsmānvijahyāditi nāthamānaḥ ||50 ||",
  "SA07n917:201": "yadā ca śabdādibhirindriyārthai-",
  "SA07n917:202": "rantaḥpure naiva suto'sya reme |",
  "SA07n917:203": "tato bahirvyādiśati sma yātrāṃ",
  "SA07n917:204": "rasāntaraṃ syāditi manyamānaḥ ||51 ||",
  "SA07n917:205": "snehācca bhāvaṃ tanayasya buddhvā",
  "SA07n917:206": "sa rāgadoṣānavicintya kāṃścit |",
  "SA07n917:207": "yogyāḥ samājñāpayati sma tatra",
  "SA07n917:208": "kalāsvabhijñā iti vāramukhyāḥ ||52 ||",
  "SA07n917:209": "tato viśeṣeṇa narendramārge",
  "SA07n917:210": "svalaṃkṛte caiva parīkṣite ca |",
  "SA07n917:211": "vyatyasya sūtaṃ ca rathaṃ ca rājā",
  "SA07n917:212": "prasthāpayāmāsa bahiḥ kumāram ||53 ||",
  "SA07n917:213": "tatastathā gacchati rājaputre",
  "SA07n917:214": "taireva devairvihito gatāsuḥ |",
  "SA07n917:215": "taṃ caiva mārge mṛtamuhyamānaṃ",
  "SA07n917:216": "sūtaḥ kumāraśca dadarśa nānyaḥ ||54 ||",
  "SA07n917:217": "athabravīdrājasutaḥ sa sūtaṃ",
  "SA07n917:218": "naraiścaturbhihriyate ka eṣaḥ |",
  "SA07n917:219": "dīnairmanuṣyairanugamyamāno",
  "SA07n917:220": "yo bhūṣitaścāpyavarudyate ca ||55 ||",
  "SA07n917:221": "tataḥ sa śudhdātmabhireva devaiḥ",
  "SA07n917:222": "śuddhādhivāsairabhibhūtacetāḥ |",
  "SA07n917:223": "avācyamapyathīmimaṃ niyantā",
  "SA07n917:224": "pravyājahārārthavadīśvarāya ||56 ||",
  "SA07n917:225": "buddhīndriyaprāṇaguṇairviyuktaḥ",
  "SA07n917:226": "supto visaṃjñastṛṇakāṣṭhabhūtaḥ |",
  "SA07n917:227": "saṃvardhya saṃrakṣya ca yatnavadbhiḥ",
  "SA07n917:228": "priyapriyaistyajyata eṣa ko'pi ||57 ||",
  "SA07n917:229": "iti praṇetuḥ sa niśamya vākyaṃ",
  "SA07n917:230": "saṃcukṣubhe kiṃciduvāca cainam |",
  "SA07n917:231": "kiṃ kevalo'syaiva janasya dharmaḥ",
  "SA07n917:232": "sarvaprajānāmayamīdṛśo'ntaḥ ||58 ||",
  "SA07n917:233": "tataḥ praṇetā vadati sma tasmai",
  "SA07n917:234": "sarvaprajānāmidamantakarma |",
  "SA07n917:235": "hīnasya madhyasya mahātmano vā",
  "SA07n917:236": "sarvasya loke niyato vināśaḥ ||59 ||",
  "SA07n917:237": "tataḥ sa dhīro'pi narendrasūnuḥ",
  "SA07n917:238": "śrutvaiva mṛtyuṃ viṣasāda sadyaḥ |",
  "SA07n917:239": "aṃsena saṃśliṣya ca kūbarāgraṃ",
  "SA07n917:240": "provāca nihrādavatā svareṇa ||60 ||",
  "SA07n917:241": "iyaṃ ca niṣṭhā niyatā prajānāṃ",
  "SA07n917:242": "pramādyati tyaktabhayaśca lokaḥ |",
  "SA07n917:243": "manāṃsi śaṅke kaṭhināni nṝṇāṃ",
  "SA07n917:244": "svasthāstathā hyadhvani vartamānāḥ ||61 ||",
  "SA07n917:245": "tasmādrathaḥ sūta nivartyatā no",
  "SA07n917:246": "vihārabhūmerna hi deśakālaḥ |",
  "SA07n917:247": "jānanvināśaṃ kathamartikāle",
  "SA07n917:248": "sacetanaḥ syādiha hi pramattaḥ ||62 ||",
  "SA07n917:249": "iti bruvāṇe'pi narādhipātmaje",
  "SA07n917:250": "nivartayāmāsa sa naiva taṃ ratham |",
  "SA07n917:251": "viśeṣayuktaṃ tu narendraśāsanā-",
  "SA07n917:252": "tsa padmaṣaṇḍaṃ vanameva niryayau ||63 ||",
  "SA07n917:253": "tataḥ śivaṃ kusumitabālapādapaṃ",
  "SA07n917:254": "paribhramatpramuditamattakokilam |",
  "SA07n917:255": "vimānavatsa kamalacārudīrghikaṃ",
  "SA07n917:256": "dadarśa tadvanamiva nandanaṃ vanam ||64 ||",
  "SA07n917:257": "varāṅganāgaṇakalilaṃ nṛpātmaja-",
  "SA07n917:258": "stato balādvanamatinīyate sma tat |",
  "SA07n917:259": "varāpsarovṛtamalakādhipālayaṃ",
  "SA07n917:260": "navavrato muniriva vighnakātaraḥ ||65 ||",
  "SA07n917:261": "iti buddhacarite mahākāvye",
  "SA07n917:262": "saṃvegotpattirnāma tṛtīyaḥ sargaḥ ||3 ||"
}