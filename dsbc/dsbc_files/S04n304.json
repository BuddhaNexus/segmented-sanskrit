{
  "S04n304:0": "8 acalā nāma aṣṭamī bhūmiḥ |",
  "S04n304:1": "upakramagāthāḥ |",
  "S04n304:2": "eva śrutva caraṇaṃ viduna śreṣṭhaṃ",
  "S04n304:3": "devasaṃgha muditā marupatiśca |",
  "S04n304:4": "bodhisattva bahavo jagaddhitaiṣi",
  "S04n304:5": "pūjayanti sugataṃ jinasutāṃśca || 1 ||",
  "S04n304:6": "puṣpamālya rucirā dhvajāpatākā",
  "S04n304:7": "gandhacūrṇa rucirā ratanavastrā |",
  "S04n304:8": "chatra naikarucirān maṇipratyuptān",
  "S04n304:9": "hārameghapravarānabhisṛjanti || 2 ||",
  "S04n304:10": "manojñaghoṣamadhuraṃ suravandū",
  "S04n304:11": "mukta naikaturiyapravaranāṭān |",
  "S04n304:12": "pūjanārthi jinaputra sugatāṃśca",
  "S04n304:13": "varṇaśreṣṭha munino udāharanti || 3 ||",
  "S04n304:14": "sarvi darśi vṛṣabhī dvipādaśreṣṭho",
  "S04n304:15": "darśi buddhaviṣayaṃ jagaddhitārtham |",
  "S04n304:16": "śabdamegha rucirān pratāḍamānā-",
  "S04n304:17": "stūryatāla vividhāstada pramuktāḥ || 4 ||",
  "S04n304:18": "vālakoṭi sugatāḥ śatasahasrā",
  "S04n304:19": "gaṅgākoṭi nayutā rajaviśiṣṭāḥ |",
  "S04n304:20": "kṣemamapratisamāḥ pravaraśreṣṭhaṃ",
  "S04n304:21": "deśayanti vṛṣabhī virajadharmam || 5 ||",
  "S04n304:22": "preta tirya narakā manujadevāḥ",
  "S04n304:23": "yakṣa rakṣa bhujagā asurasaṃghā |",
  "S04n304:24": ".................................",
  "S04n304:25": "nānakarmaviṣaye samanubhonti || 6 ||",
  "S04n304:26": "sarvakṣetraviṣaye dhutarajānāṃ",
  "S04n304:27": "cakra śreṣṭhapravaraṃ tadanirvṛttam |",
  "S04n304:28": "deśayanti madhuraṃ sugataghoṣaṃ",
  "S04n304:29": "saṃjñacitta jagatastatha vicāran || 7 ||",
  "S04n304:30": "sattvakāyi sugatā vividhakṣetrā",
  "S04n304:31": "kṣetri sattvapravarāḥ punavipākāḥ |",
  "S04n304:32": "devamānuṣagatī tatha vicitrā",
  "S04n304:33": "jñātva sarva sugato bhaṇati dharmam || 8 ||",
  "S04n304:34": "sūkṣmasaṃjña bhavati vipulakṣetre",
  "S04n304:35": "vipulasaṃjña bhavati rajanimitte |",
  "S04n304:36": "evamādi vividhāṃ sugataṛddhiṃ",
  "S04n304:37": "sarvaloka bhaṇato na kṣepayeyuḥ || 9 ||",
  "S04n304:38": "īddaśaṃ vacamāhātmyaṃ vacitvā madhurasvaram |",
  "S04n304:39": "praśāntā pariṣatprītā prekṣate vadatāṃ varam || 10 ||",
  "S04n304:40": "praśānta parṣadaṃ jñātvā mokṣacandro'bravītpunaḥ |",
  "S04n304:41": "aṣṭamyā bhūmiākārāṃ praveśaṃ ca nidarśaya || 11 ||",
  "S04n304:42": "upasaṃhāragāthāḥ |",
  "S04n304:43": "te bhūmya saptasu viśodhita prajñupāyā",
  "S04n304:44": "mārgā susaṃbhṛta mahāpraṇidhānabaddhāḥ |",
  "S04n304:45": "supratiṣṭhitā naravarāḥ kuśalopapetā",
  "S04n304:46": "jñānābhilāṣi vidu aṣṭamimākramanti || 12 ||",
  "S04n304:47": "te puṇyajñānupagatāḥ kṛpamaitrayuktā",
  "S04n304:48": "jñānāpramāṇapathagāḥ khagabuddhikalpāḥ |",
  "S04n304:49": "śrutadharma niścitabalopagatā maharṣī",
  "S04n304:50": "kṣāntiṃ labhanti anutpādapraśāntisūkṣmām || 13 ||",
  "S04n304:51": "ādāvajāta anutpāda alakṣaṇaṃ ca",
  "S04n304:52": "asaṃbhūtatamavinaṣṭata cāpravṛttam |",
  "S04n304:53": "bhāvasvabhāvavigatā tathatāvikalpā",
  "S04n304:54": "mama cittacāravigatāḥ khagatulyakalpāḥ || 14 ||",
  "S04n304:55": "te eva kṣāntisamanvāgata niṣprapañcā",
  "S04n304:56": "gambhīracālya vidu śāntavicāraprāptāḥ |",
  "S04n304:57": "durjñeya sarvajagatārahapratyayaiśca",
  "S04n304:58": "cittaṃ nimittagrahasaṃjñavibhāvitatvāt || 15 ||",
  "S04n304:59": "evaṃ sthitānamanucintavikalpa nāsti",
  "S04n304:60": "bhikṣurnirodhyupagato'paprakalpaprāptaḥ |",
  "S04n304:61": "svapnoghaprāpta pratibuddha tathāvikalpā",
  "S04n304:62": "brahmāpure ratisaṅgarahito tathaiva || 16 ||",
  "S04n304:63": "pūrvādhiṣṭhāna sugatā puna codayanti",
  "S04n304:64": "eṣā sa kṣānti paramā sugatābhiṣeke |",
  "S04n304:65": "asmāku jñāna vipulaṃ varabuddhadharmā",
  "S04n304:66": "te tubhya nāsti ta hi vīryu samārabhāyam || 17 ||",
  "S04n304:67": "kiṃcāpi śānta tava sarvakileśajvālā",
  "S04n304:68": "jvalitaṃ niśamya puna kleśagatibhya lokam |",
  "S04n304:69": "praṇidhāna pūrva smara sattvahitaṃ vicārya",
  "S04n304:70": "jñānārthi prārthita kriyā jagamokṣahetoḥ || 18 ||",
  "S04n304:71": "sada eṣa dharmata sthitā tathatāvikalpā",
  "S04n304:72": "sarveṣu buddhajinaśrāvakapratyayānam |",
  "S04n304:73": "na hi etinā daśabalāna prabhāvu loke",
  "S04n304:74": "nānyatra jñānavipulaṃ tribhi adhvasaṅgam || 19 ||",
  "S04n304:75": "evaṃ tamapratisamā naradevapūjyā",
  "S04n304:76": "upasaṃharanti bahujñānamukhā vicārān |",
  "S04n304:77": "jinadharmaniṣpattipraveśamanantapāraṃ",
  "S04n304:78": "yasyā kalā na bhavate puna bodhicaryā || 20 ||",
  "S04n304:79": "etāni prāpta vṛṣabhī varajñānabhūmim",
  "S04n304:80": "ekakṣaṇena spharate diśatāḥ samantān |",
  "S04n304:81": "jñānapraveśupagatā varabhijñaprāptā",
  "S04n304:82": "yatha sāgare vahanu mārutayānaprāptaḥ || 21 ||",
  "S04n304:83": "sābhogacittavigatāḥ sthitajñānakarma",
  "S04n304:84": "vicinanti kṣetraprabhavaṃ vibhavasthitiṃ ca |",
  "S04n304:85": "dhātuścatvāri vinibhāgagatāna tāṃśca",
  "S04n304:86": "sūkṣmaṃ mahadgata vibhakti samosaranti || 22 ||",
  "S04n304:87": "trisahasri sarvaparamāṇurajo taranti",
  "S04n304:88": "catvāri dhātu jagakāyi vibhaktitaśca |",
  "S04n304:89": "ratnā vibhaktiparamāṇu suvargatīṣu",
  "S04n304:90": "bhinditva jñānaviṣayena gaṇentyaśeṣam || 23 ||",
  "S04n304:91": "jñāne vibhāvitamanā vidu sarvakāyān",
  "S04n304:92": "sve kāyi tatra upanenti jagārthahetoḥ |",
  "S04n304:93": "trisahasra sarva ca spharitva vicitrarūpān",
  "S04n304:94": "darśenti kāya vividhān tathanantaloke || 24 ||",
  "S04n304:95": "sūryaṃ śaśiṃ ca vahni māruta antarīkṣe",
  "S04n304:96": "svakamaṇḍalusya udake pratibhāsaprāptā |",
  "S04n304:97": "jñānottame sthita tathācaladharmatāyāṃ",
  "S04n304:98": "jaga śuddhaāśaya vidū pratibhāsaprāptā || 25 ||",
  "S04n304:99": "yathaāśayaṃ jagata kāyavibhaktitāṃ ca",
  "S04n304:100": "darśenti sarvapariṣe bhuvi sarvaloke |",
  "S04n304:101": "vaśipratyayāśraya jinātmajaśrāvakānāṃ",
  "S04n304:102": "darśenti te sugatakāya vibhūṣitāṅgān || 26 ||",
  "S04n304:103": "sattvāṃśca kṣetra tatha karmavipāka kāyān",
  "S04n304:104": "āryāśrayān vividhadharmajñānakāyān |",
  "S04n304:105": "ākāśakāya vṛṣabhī samatāmupetaṃ",
  "S04n304:106": "darśenti ṛddhi vividhān jagatoṣaṇārtham || 27 ||",
  "S04n304:107": "vaśitā daśo vimalajñānavicāraprāptā",
  "S04n304:108": "anuprāpta jñānakṛta maitrakṛpānukūlāḥ |",
  "S04n304:109": "yāvacca sarvajinadharmamupādakarmā",
  "S04n304:110": "trisaṃvaraiḥ susthitameka acalyakalpāḥ || 28 ||",
  "S04n304:111": "ye cā balā jinasutāna daśa akṣobhyā",
  "S04n304:112": "tehī upeta avibandhiya sarvamāraiḥ |",
  "S04n304:113": "buddhairadhiṣṭhita namaskṛta śakrabrahmai-",
  "S04n304:114": "statha vajrapāṇibalakaiḥ satatānubaddhāḥ || 29 ||",
  "S04n304:115": "ima bhūmideśupagatā na guṇānamanto",
  "S04n304:116": "no śakyate kṣayitu kalpasahasrakoṭyaiḥ |",
  "S04n304:117": "te bhūya buddha niyutān samupāsayante",
  "S04n304:118": "bhonto utapta yatha bhūṣaṇu rājamūrdhni || 30 ||",
  "S04n304:119": "ima bhūmideśupagatā vidu bodhisattvā",
  "S04n304:120": "mahabrahma bhonti sahasrādhipatī guṇāḍhyāḥ |",
  "S04n304:121": "trayayānadeśana akṣobhyasaṃhāraprāptā",
  "S04n304:122": "maitrāyanaḥ śubhaprabhā jagakleśaghātī || 31 ||",
  "S04n304:123": "ekakṣaṇena daśakṣetraśataḥsahasrā",
  "S04n304:124": "yāvā rajodhātu tattaka samādhyupenti |",
  "S04n304:125": "paśyanti tattaka daśadiśi sattvasārān",
  "S04n304:126": "bhūyo ataḥ praṇidhiśreṣṭha vyūha nekāḥ || 32 ||",
  "S04n304:127": "saṃkṣepa eṣa nirdiṣṭo aṣṭamāyā jinātmajāḥ |",
  "S04n304:128": "vistaraḥ kalpakoṭībhirna śakyaḥ sarva bhāṣitum || 33 ||"
}