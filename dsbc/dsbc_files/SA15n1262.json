{
  "SA15n1262:0": "tarkaśāstram |",
  "SA15n1262:1": "atha prathamaṃ prakaraṇam |",
  "SA15n1262:2": "(śāstramāha)",
  "SA15n1262:3": "bhavān manyate'smadvacanamanyāyyamiti cedbhavato'pi vacanamanyāyyam |",
  "SA15n1262:4": "yadi bhavadvacanamanyāyyaṃ,",
  "SA15n1262:5": "tadāsmadvacanaṃ nyāyyam |",
  "SA15n1262:6": "yadi [bhavatocyate] bhavadvacanaṃ nyāyyaṃ,",
  "SA15n1262:7": "paramasmadvacanamanyāyyaṃ tanna yuktam |",
  "SA15n1262:8": "kiñca yadanyāyyaṃ tadetatsvato nyāyyaṃ,",
  "SA15n1262:9": "tasmād yadanyāyyaṃ tannāsti |",
  "SA15n1262:10": "yadi svato 'nyāyyaṃ tadetadanyāyyamasaccaiva,",
  "SA15n1262:11": "tasmādahamanyāyya[vādī] iti cedbhavatocyate tadayuktam |",
  "SA15n1262:12": "anyacca | mama vacanamanyāyyamiti cedbhavatocyate,",
  "SA15n1262:13": "tato bhavānajña iti spaṣṭam |",
  "SA15n1262:14": "kuta iti cet |",
  "SA15n1262:15": "yadanyāyyaṃ tannirābhāsam |",
  "SA15n1262:16": "vacanaṃ nyāyābhāvādbhinnamabhinnaṃ vā ? |",
  "SA15n1262:17": "abhinnaṃ cedvacanamapi nāstīti mama vacanamanyāyyamiti bhavatā kathamucyate |",
  "SA15n1262:18": "atha bhinnaṃ,",
  "SA15n1262:19": "tato vacanaṃ nyāyyamiti mama vacanamanyāyyamiti kathaṃ bhavatocyate |",
  "SA15n1262:20": "vacanasvalakṣaṇakhaṇḍanācca |",
  "SA15n1262:21": "bhavatkhaṇḍanavacanamasmadvacanasya samakālīnamasamakālīnaṃ vā ?",
  "SA15n1262:22": "samakālīnaṃ cedasmadvacanakhaṇḍane'samarthaṃ,",
  "SA15n1262:23": "yathā gośṛṅge'śvakarṇau vā parasparaṃ khaṇḍayituṃ na śaknuvataḥ |",
  "SA15n1262:24": "samakālīnatvāt |",
  "SA15n1262:25": "asamakālīnañced,",
  "SA15n1262:26": "bhavataḥ khaṇḍanaṃ pūrvamasmadvacanaṃ paścāt |",
  "SA15n1262:27": "athāsmadvacanānuccāraṇāt,",
  "SA15n1262:28": "kiṃ bhavatā khaṇḍyate ? |",
  "SA15n1262:29": "tasmābhdavataḥ khaṇḍanamasidvam |",
  "SA15n1262:30": "athāsmadvacanaṃ pūrvaṃ,",
  "SA15n1262:31": "bhavataḥ khaṇḍanaṃ tu paścād,",
  "SA15n1262:32": "evaṃ tarhyasmadvacanasidvatvāt kasya khaṇḍanaṃ bhaviṣyati ? |",
  "SA15n1262:33": "samakālīnañcet,",
  "SA15n1262:34": "tato'smadvacanaṃ bhavataśca khaṇḍanamityetayoretat khaṇḍanametacca khaṇḍanīyamiti viśeṣo na syāt |",
  "SA15n1262:35": "yathā nadīsamudravārisaṃyogakāle viśeṣāsambhavaḥ |",
  "SA15n1262:36": "aparañca | bhavataḥ khaṇḍanaṃ svakhaṇḍanārthamasvakhaṇḍanārthaṃ vā ?",
  "SA15n1262:37": "svakhaṇḍanārthañcet,",
  "SA15n1262:38": "tataḥ svataḥ svārthahīnaṃ bhavedasmadvacananu siddham |",
  "SA15n1262:39": "asvakhaṇḍanārthañced, asiddham |",
  "SA15n1262:40": "kuta iti cet,",
  "SA15n1262:41": "svārthataḥ khaṇḍanāsidveḥ |",
  "SA15n1262:42": "siddhañcet,",
  "SA15n1262:43": "svārthahāniḥ parārthasidviśca |",
  "SA15n1262:44": "kiñcāsmadvacanamanyāyyamiti ced,",
  "SA15n1262:45": "vacanameva na bhavet |",
  "SA15n1262:46": "vacanañcennaivānyāyyam |",
  "SA15n1262:47": "anyāyyamiti cet,",
  "SA15n1262:48": "tadvirudvam |",
  "SA15n1262:49": "yathā kumārī putravatīti |",
  "SA15n1262:50": "yato yadi kumārī putravatīti na sampadyate |",
  "SA15n1262:51": "yadi putravatī,",
  "SA15n1262:52": "tarhi naiva kumārī |",
  "SA15n1262:53": "kumārīti putravatīti cobhayaṃ virudvam |",
  "SA15n1262:54": "tasmānmama vacanamanyāyyamiti cedbhavatocyate tadayuktam |",
  "SA15n1262:55": "etatpunaḥ pratyakṣavirudvam |",
  "SA15n1262:56": "bhavānasmākaṃ vacanaṃ śrutvā'nyāyyaṃ manyate cet,",
  "SA15n1262:57": "tattarhi śrutatvātpratyakṣasiddham |",
  "SA15n1262:58": "pratyakṣaṃ hi balavattaraṃ tasmādbhavadvacanahāniḥ |",
  "SA15n1262:59": "yathā kaścinmanyeta śrotravijñānataḥ śabdasyānupalabdhiratha śrotravijñānataḥ śabdasyopalabdhiḥ pratyakṣasidveti,",
  "SA15n1262:60": "tadā pratyakṣasya balavattaratvāttadvacanahāniḥ |",
  "SA15n1262:61": "anumānaviruddhaṃ caitat |",
  "SA15n1262:62": "mama vacanamanumānenopalabhyate cettato nyāyyamiti spaṣṭam |",
  "SA15n1262:63": "anyāyyaṃ hi vacanaṃ naiva vidyate |",
  "SA15n1262:64": "yadi vacanamasti tadā nyāyyamiti jñāyate |",
  "SA15n1262:65": "yathā kaścinmanyeta śabdo'nityo hetumattvāt |",
  "SA15n1262:66": "yacca hetumattadanityaṃ,",
  "SA15n1262:67": "yathā ghaṭaḥ |",
  "SA15n1262:68": "sa hetumattvādanityaḥ |",
  "SA15n1262:69": "yadi hetumāṃstadā'nityaḥ śabdo,",
  "SA15n1262:70": "yadi nityo naiva hetumān |",
  "SA15n1262:71": "ityanityatānumānasidvā |",
  "SA15n1262:72": "anumānabalānnityatahāniḥ |",
  "SA15n1262:73": "nyāyyamiti,",
  "SA15n1262:74": "yadvacanaṃ tannyāyyam |",
  "SA15n1262:75": "yannyāyyamityanumānasiddhaṃ,",
  "SA15n1262:76": "tadanyāyyamiti pratiṣidvam |",
  "SA15n1262:77": "lokavirudvaṃ caitat |",
  "SA15n1262:78": "yadbhavatoktaṃ mama vacanamanyāyyamiti tallokavirudvam |",
  "SA15n1262:79": "kasmāditi, loke hi caturvidhanyāyasatvāt |",
  "SA15n1262:80": "[tathā hi] hetuphalanyāyaḥ sāpekṣanyāyaḥ sādhananyāyastathatānyāyaśca |",
  "SA15n1262:81": "hetuphalanyāyaḥ |",
  "SA15n1262:82": "yathā bījamaṅkuraśca |",
  "SA15n1262:83": "sāpekṣanyāyaḥ |",
  "SA15n1262:84": "yathā dīrghaṃ hrasvaṃ,",
  "SA15n1262:85": "pitā putraḥ |",
  "SA15n1262:86": "sādhananyāyaḥ |",
  "SA15n1262:87": "yathā pañcāvayavavākyaṃ sādhanārtham |",
  "SA15n1262:88": "tathatānyāyastrividhaḥ |",
  "SA15n1262:89": "yathā'nātmatathatā'nityatātathatā nirodhatathatā ca |",
  "SA15n1262:90": "iha loke vacanaṃ phalaṃ,",
  "SA15n1262:91": "nyāyo heturiti |",
  "SA15n1262:92": "iha loke yadā phalaṃ dṛṣṭaṃ tadā sahetukaṃ jñātam |",
  "SA15n1262:93": "yadā vacanamupalabdhaṃ,",
  "SA15n1262:94": "tadā nyāyyaṃ jñātam |",
  "SA15n1262:95": "yanmama vacanamanyāyyamiti bhavatoktaṃ tallokavirudvam |",
  "SA15n1262:96": "anyāyyaṃ vacanamityasya nāstyavakāśaḥ |",
  "SA15n1262:97": "yad bhavatoktaṃ mama vacanamanyahisaṃvāditvāditi tadidamidānīṃ bhavatā sārdhaṃ vicārya nirdhāryate |",
  "SA15n1262:98": "yadi kaścidanyadvadettadā tasya doṣaḥ syat |",
  "SA15n1262:99": "bhidyate bhavataḥ pratijñā'smatpratijñātaḥ |",
  "SA15n1262:100": "atha tadbhavataḥ svoktam |",
  "SA15n1262:101": "tadānyaduktam |",
  "SA15n1262:102": "tasmādbhavāneva doṣamāpadyate |",
  "SA15n1262:103": "yadi bhavadartho 'smaduktādanyastadānyatvadoṣo bhavata eva na tu mama |",
  "SA15n1262:104": "yadi nānyat,",
  "SA15n1262:105": "tarhi matpakṣatulyameva,",
  "SA15n1262:106": "tena nāstyanyatvam |",
  "SA15n1262:107": "athocyate mamānyaditi tanmithyā |",
  "SA15n1262:108": "anyaccānyasmānnānyadityananyatvam |",
  "SA15n1262:109": "yadyanyadanyasmādanyat,",
  "SA15n1262:110": "tato'nyanna bhavet |",
  "SA15n1262:111": "yathā manuṣyo goranyo na gaurbhavati,",
  "SA15n1262:112": "yadyanyadanyasmādanyat,",
  "SA15n1262:113": "tadā tadekaṃ bhavet |",
  "SA15n1262:114": "yadyekaṃ tato nānyat,",
  "SA15n1262:115": "tatkimucyate mamānyaditi |",
  "SA15n1262:116": "ataścaitanyāyyamiti |",
  "SA15n1262:117": "ahaṃ nyāyamavalambya bhavatā vivade |",
  "SA15n1262:118": "tasmādanyathāhaṃ vadāmi |",
  "SA15n1262:119": "yadyāvayorbheda eva na syānna tadā bhavatā vivādo'haṃ tu bhavadarthameva vadāmi |",
  "SA15n1262:120": "sarvamuktamanyaditi ced,",
  "SA15n1262:121": "bhavatāpi kiñciduktamiti bhavānapyanyadvadatīti doṣo bhavata eva |",
  "SA15n1262:122": "yadi bhavato vākyaṃ nānyat,",
  "SA15n1262:123": "tarhi mamāpi vacanaṃ nānyaditi yad bhavatoktamahamanyadvadāmīti tadayuktam |",
  "SA15n1262:124": "atha bhavadvacanaṃ mithyaiva |",
  "SA15n1262:125": "śeṣaṃ pūrvavat |",
  "SA15n1262:126": "yad (bhavato)",
  "SA15n1262:127": "ktaṃ mama vacanamasiddhamiti tadidānīṃ (bhavatā sārdhaṃ)",
  "SA15n1262:128": "vicārya nirdhāryate |",
  "SA15n1262:129": "yadi vacanamasiddhaṃ,",
  "SA15n1262:130": "tadā tadeva vacanamasiddham |",
  "SA15n1262:131": "yadi vacanasyāsiddhatvaṃ,",
  "SA15n1262:132": "tadā vacanameva na prāptam |",
  "SA15n1262:133": "atha vacanaṃ na prāptaṃ,",
  "SA15n1262:134": "kathaṃ bhavatocyate mayā yaduktaṃ tadasiddhamiti |",
  "SA15n1262:135": "atha vacanaṃ prāptaṃ tatsidvameva syāt |",
  "SA15n1262:136": "yadi maduktamasiddhamiti bhavatocyate tadayuktam |",
  "SA15n1262:137": "yadi sarvaṃ vacanamasiddha,",
  "SA15n1262:138": "tarhi bhavaduktaṃ mama khaṇdanamapyasiddham |",
  "SA15n1262:139": "yadi bhavaduktaṃ khaṇḍanamasiddhaṃ na syāt,",
  "SA15n1262:140": "tarhi mama vacanamapi naivāsiddham |",
  "SA15n1262:141": "yadi (bhavato)",
  "SA15n1262:142": "cyate maduktamasiddhaṃ tadayuktam |",
  "SA15n1262:143": "yadasiddhaṃ tatsvata eva siddham |",
  "SA15n1262:144": "tasmānnāstyasiddham |",
  "SA15n1262:145": "yadyasiddha na svataḥ siddhaṃ,",
  "SA15n1262:146": "tadāsiddhaṃ na syāt |",
  "SA15n1262:147": "yadi siddhaṃ,",
  "SA15n1262:148": "nāstyasiddhaṃ,",
  "SA15n1262:149": "tato yad (bhavato)",
  "SA15n1262:150": "ktaṃ maduktamasiddhamiti tanniravakāśam |",
  "SA15n1262:151": "yadi bhavatocyate mama khaṇḍanamananubhāṣaṇameva tadā na mama matasyopalabdhi |",
  "SA15n1262:152": "atha nopalabhyate mama mataṃ,",
  "SA15n1262:153": "tato mama khaṇḍanaṃ kartuṃ na śakyate |",
  "SA15n1262:154": "tadidānīṃ (bhavatā sārdhaṃ)",
  "SA15n1262:155": "vicārya nirdhāryate |",
  "SA15n1262:156": "yadi bhavān matkhaṇḍanaṃ nānubhāṣate,",
  "SA15n1262:157": "tadā bhavān khaṇḍanaṃ vaktuṃ na śaknoti |",
  "SA15n1262:158": "kiṃ punarmanyate bhavān khaṇḍanamananubhāṣya khaṇḍanaṃ śakyaṃ,",
  "SA15n1262:159": "athavā khaṇḍanamanubhāṣya khaṇḍanaṃ śakyam |",
  "SA15n1262:160": "yadi tāvad (bhavān)",
  "SA15n1262:161": "ananubhāṣya (khaṇḍanaṃ vaktuṃ śaknoti)",
  "SA15n1262:162": ", ahamapyananubhāṣya khaṇḍanaṃ vaktuṃ śaknuyām |",
  "SA15n1262:163": "athavā khaṇḍanamanubhāṣya khaṇḍanaṃ vaktuṃ śakyaṃ,",
  "SA15n1262:164": "tadā sadaiva khaṇḍanānubhāṣaṇam syāt |",
  "SA15n1262:165": "kutaḥ ? khaṇḍanātpunaḥ khaṇḍanasyotpannatvāt |",
  "SA15n1262:166": "tadā khaṇḍanānavasthā |",
  "SA15n1262:167": "na ca sa kālo vidyate yatra na khaṇḍanānubhāṣaṇam |",
  "SA15n1262:168": "[ataḥ] yatra khaṇḍanaṃ vaktuṃ śakyate sa kālo nāsti |",
  "SA15n1262:169": "aparañca khaṇḍanamiti khaṇḍanānnāma |",
  "SA15n1262:170": "yadi tatkhaṇḍanānubhāṣaṇānnāma khaṇḍanamiti vaktuṃ śakyate,",
  "SA15n1262:171": "ananubhāṣya tu khaṇḍanamiti vaktuṃ ja śakyate |",
  "SA15n1262:172": "tataḥ pūrvakhaṇḍanasya nāma paścādanubhāṣaṇaṃ prāptam |",
  "SA15n1262:173": "paravartikhaṇḍanaṃ nāma na tāvadanubhāṣaṇaṃ prāpnoti |",
  "SA15n1262:174": "tṛtīyantu dvitīyasya khaṇḍanasya nāmānubhāṣaṇaṃ prāptam |",
  "SA15n1262:175": "caturthaṃ tṛtīyasya khaṇḍanasya nāmānubhāṣaṇaṃ prāptam |",
  "SA15n1262:176": "iti sadānubhāṣaṇādanavasthā |",
  "SA15n1262:177": "ananubhāṣya khaṇḍanaṃ nāma vaktuṃ śakyamiti ced,",
  "SA15n1262:178": "ananubhāṣyāpi tataḥ prathamaṃ khaṇḍanaṃ nāma vaktuṃ śakyam |",
  "SA15n1262:179": "prathamaṃ khaṇḍanam nāmānanubhāṣya khaṇḍanaṃ nāma vaktuṃ śakyamiti cet,",
  "SA15n1262:180": "dvitīyamapi khaṇḍanaṃ nāmānanubhāṣya khaṇḍanaṃ nāma vaktuṃ śakyate |",
  "SA15n1262:181": "dvitīyaṃ khaṇḍanaṃ nāmānanubhāṣya khaṇḍanamiti vaktuṃ śakyata iti cet,",
  "SA15n1262:182": "prathamaṃ khaṇḍanaṃ nāmāpyananubhāṣya khaṇḍanaṃ nāma vaktuṃ śakyeta |",
  "SA15n1262:183": "kintu prathamaṃ khaṇḍanaṃ nāmāvaśyamanubhāṣyam |",
  "SA15n1262:184": "tasmātkhaṇḍanaṃ nāma vaktuṃ śakyate |",
  "SA15n1262:185": "atha dvitīyaṃ khaṇḍanaṃ nāmāpyavaśyamanubhāṣyaṃ,",
  "SA15n1262:186": "tadā khaṇḍanaṃ nāma vaktuaṃ śakyate natvananubhāṣya vaktavyam |",
  "SA15n1262:187": "yadi punaḥ khaṇḍanamananubhāṣya vadet,",
  "SA15n1262:188": "khaṇḍanasya nigrahasthānāpattiḥ |",
  "SA15n1262:189": "yadi bhavān svakhaṇḍanaṃ nānubhāṣate,",
  "SA15n1262:190": "tato bhavaduktakhaṇḍanasya nigrahasthānāpattiḥ |",
  "SA15n1262:191": "yadi bhavān khaṇḍanamananubhāṣya khaṇḍanaṃ vadet,",
  "SA15n1262:192": "khaṇḍanaṃ vadaṃśca nigrahasthāne na patet,",
  "SA15n1262:193": "tadāhamapi khaṇḍanamananubhāṣya khaṇḍanaṃ vadanna nigrāhyaḥ |",
  "SA15n1262:194": "kiñca yadā bhavadvacanaṃ mama[mataṃ] khaṇḍayati,",
  "SA15n1262:195": "tadā'hamanubhāṣe |",
  "SA15n1262:196": "yadā tvahaṃ bhavanmataṃ khaṇḍayāmi tadā bhavānapyanubhāṣate |",
  "SA15n1262:197": "atha parasparānubhāṣaṇaṃ,",
  "SA15n1262:198": "na tadā khaṇḍanapratiṣṭhāpanam |",
  "SA15n1262:199": "yadi parasparānubhāṣaṇaṃ,",
  "SA15n1262:200": "tadā samyagarthahāniḥ |",
  "SA15n1262:201": "yathā potāvanyonyasambadvau samudravelāsamaye parasparasaṃgharṣeṇa dolāyamānau |",
  "SA15n1262:202": "aparañca | sarve śabdā yadā mukhānnirgatāstadā naṣṭā eveti kathaṃ madvacanānubhāṣaṇam ? |",
  "SA15n1262:203": "atha śabdo vināśadharmā |",
  "SA15n1262:204": "apunarāgamanātpunarbhāṣaṇamaśakyam |",
  "SA15n1262:205": "atha śabdaḥ sthitiśīlastadānubhāṣaṇamaśakyaṃ, nityatvāt |",
  "SA15n1262:206": "naṣṭa iti cen,",
  "SA15n1262:207": "na kiñcidanubhāṣitavyaṃ tadabhāvāt |",
  "SA15n1262:208": "śabdo naṣṭa iti cet,",
  "SA15n1262:209": "tvadanubhāṣaṇāyaitanme vacanamiti yadbhavān bravīti sa kutarka eva |",
  "SA15n1262:210": "yad(bhavato)",
  "SA15n1262:211": "ktaṃ madvacanaṃ pūrva,",
  "SA15n1262:212": "[bhavata] khaṇḍanaṃ tu paścāditi tadidānīṃ (bhavatā sārdhaṃ)",
  "SA15n1262:213": "vicārya nirdhāryate |",
  "SA15n1262:214": "yadi madvacanaṃ pūrvaṃ,",
  "SA15n1262:215": "khaṇḍanantu paścāditi tanyāyyam |",
  "SA15n1262:216": "kuta iti cen,",
  "SA15n1262:217": "madvacanaṃ pūrvaṃ bhavadvacanaṃ tu paścāditi |",
  "SA15n1262:218": "yadyasmadvacanaṃ paravartivacanaṃ khaṇḍayati,",
  "SA15n1262:219": "tato'smadartho viśiṣyate bhavadvacanasya tu hāniḥ |",
  "SA15n1262:220": "kiñca yadyucyate bhavatā sarvāṇi vacanāni pūrvavartīni khaṇḍanantu paravartīti,",
  "SA15n1262:221": "tadā bhavānapi pūrvameva vacanaṃ vadatīti paścātkhaṇḍanaṃ bhavet |",
  "SA15n1262:222": "yadi bhavadvacanasya pūrvavartitve'pi paścātkhaṇḍanaṃ nāsti,",
  "SA15n1262:223": "tarhi madvacanasya pūrvavartitve'pi,",
  "SA15n1262:224": "paścātkhaṇḍanaṃ na syāt |",
  "SA15n1262:225": "yacca khaṇḍanaṃ pūrvasya paravartīti svabhāvataḥ pūrvasya khaṇḍanaṃ na paścādasti |",
  "SA15n1262:226": "yadi svabhāvata eva pūrvasya khaṇḍanaṃ paścāt syāt,",
  "SA15n1262:227": "tadā pūrvaṃ paścādityubhe na syātām |",
  "SA15n1262:228": "tasmādyadbhavatoktaṃ pūrvasya khaṇḍanaṃ parabhāvīti tadayuktam |",
  "SA15n1262:229": "yadi svabhāvataḥ pūrvasya khaṇḍanaṃ na paścāt |",
  "SA15n1262:230": "hetvabhāvāt |",
  "SA15n1262:231": "tadā pūrvasyāpi khaṇḍanaṃ parabhāvi na bhavet |",
  "SA15n1262:232": "yadbhavatoktaṃ madvacanaṃ pūrvaṃ,",
  "SA15n1262:233": "khaṇḍanaṃ tu parabhāvi tanmithyā |",
  "SA15n1262:234": "yadabhihitaṃ bhavatā,",
  "SA15n1262:235": "mayā hetvantaramuktamiti tadidānīṃ (bhavatā sārdhaṃ)",
  "SA15n1262:236": "vicārya nirdhāryate |",
  "SA15n1262:237": "yadi pūrvahetuṃ parityajya hetvantarapratiṣṭhāpanānnigrahasthānamāpadyate,",
  "SA15n1262:238": "tadā bhavān nigrahasthānamāpannaḥ |",
  "SA15n1262:239": "kathamiti ced,",
  "SA15n1262:240": "bhavatā pūrvahetuṃ parityajya hetvantarapratiṣṭhāpanāt |",
  "SA15n1262:241": "yadi hetvantarapratiṣṭhāpanādbhavato na nigrahasthānatvāpattistadā mamāpi tathā |",
  "SA15n1262:242": "kiñca maduktahetuto bhavaduktahetorbhedaḥ |",
  "SA15n1262:243": "yadyanyaṃ hetuṃ vadāmi tanmama nyāyyam |",
  "SA15n1262:244": "yadyanyaṃ hetuṃ na vadeyaṃ,",
  "SA15n1262:245": "tato bhavaddhetuṃ vadeyam |",
  "SA15n1262:246": "tato na pratipakṣatayā virodho'pi tvāvayostulyavacanataiva |",
  "SA15n1262:247": "yadi sadṛśa eva heturāvābhyāṃ pratiṣṭhāpitaḥ,",
  "SA15n1262:248": "tadā bhavānasmaddhetuṃ khaṇḍayatīti svahetumeva khaṇḍayati |",
  "SA15n1262:249": "api ca yadi sarvāṇi vacanāni hetvantarāṇi syustadābhavaduktāni vacanānyapi hetvantarāṇi bhaveyuḥ |",
  "SA15n1262:250": "tataśca bhavato nigrahasthānāpattiḥ |",
  "SA15n1262:251": "atha vacanānyuccārayannapi na bhavān nigrāhyastarhi yadbhavatoktaṃ hetuṃ pratiṣṭhāpayannahaṃ nigrāhya iti tadayuktam |",
  "SA15n1262:252": "yadbhavatoktamarthāntaraṃ vadāmīti tadidānīṃ (bhavatā sārdhaṃ)",
  "SA15n1262:253": "vicāryaṃ nirdhāryate |",
  "SA15n1262:254": "anyā me pratijñā,",
  "SA15n1262:255": "anyā ca bhavata iti yattannyāyyameva |",
  "SA15n1262:256": "athāhaṃ bhavataḥ pratipakṣatayā virodhītyarthāntaraṃ bravīmi |",
  "SA15n1262:257": "yadi matamasmadartho bhavadarthādananyastadā'smadartho bhavadarthapratipakṣatayā na virudvo |",
  "SA15n1262:258": "yadi bhavānasmadarthaṃ khaṇḍayati,",
  "SA15n1262:259": "tarhi bhavataḥ svārthasyaiva khaṇḍanaṃ bhavet |",
  "SA15n1262:260": "yadarthāntaraṃ na tatsvayamarthāntarama |",
  "SA15n1262:261": "tasmānnāstyarthāntaram |",
  "SA15n1262:262": "yadi tvarthāntaraṃ svayamevārthāntaraṃ,",
  "SA15n1262:263": "na tadārthāntaram |",
  "SA15n1262:264": "tasmādyadbhavatoktamahamarthāntaraṃ vadāmīti na yuktam |",
  "SA15n1262:265": "aparañca yaduktaṃ sarvaṃ tadarthāntarañcettadā bhavaduktamapyarthāntaraṃ bhavet |",
  "SA15n1262:266": "yadi bhavaduktamarthāntaraṃ na bhavettadā yadbhavatā pratijñātaṃ sarvamarthāntaramiti tadayuktam |",
  "SA15n1262:267": "yad (bhavato)",
  "SA15n1262:268": "ktamahaṃ pūrvacanādananyadvacanaṃ vadāmīti tadidānīṃ (bhavatā sārdhaṃ)",
  "SA15n1262:269": "vicārya nirdhāryate |",
  "SA15n1262:270": "asmatpratijñā bhavatpratijñāyāḥ pratipakṣabhāvena viruddhā |",
  "SA15n1262:271": "yadasmatpratijñā bhavatpratijñāyāḥ pratipakṣabhāvena virudvā,",
  "SA15n1262:272": "tannyāyyam |",
  "SA15n1262:273": "kuta iti cet |",
  "SA15n1262:274": "sarvatrāhaṃ bhavadarthakhaṇḍanārthaṃ vadāmi,",
  "SA15n1262:275": "tasmādasmadvacanamananyat |",
  "SA15n1262:276": "yadi mayārthāntaramuktaṃ,",
  "SA15n1262:277": "tarhi bhavatpratijñā'smadarthādanyā |",
  "SA15n1262:278": "yadyahamarthāntaraṃ vadāmi tadā bhavadarthaṃ vadāmi |",
  "SA15n1262:279": "evantāvannāhaṃ bhavadviruddo |",
  "SA15n1262:280": "tataśca yadi bhavān māṃ khaṇḍayati,",
  "SA15n1262:281": "tarhi svārthasyaiva khaṇḍanam |",
  "SA15n1262:282": "anyacca | yathā mayā pūrvamuktamanityaḥ śabda iti |",
  "SA15n1262:283": "etāni vacanāni vināśasvabhāvāni kṣayasvabhāvāni ca |",
  "SA15n1262:284": "idānīmanyadvacanamuccaryate |",
  "SA15n1262:285": "tataśca yadbhavatoktaṃ bhavān pūrvavacanaṃ vadatīti tanmithyā |",
  "SA15n1262:286": "aparañca | yadbhavatoktaṃ maduktamananyaditi |",
  "SA15n1262:287": "tatra yadyahamanyadvadāmi tadā tadanyayat |",
  "SA15n1262:288": "yadyahamananyadvadāmi tadananyat |",
  "SA15n1262:289": "yadyahaṃ tadvadaṃstanna sādhayituṃ śaknomi,",
  "SA15n1262:290": "tadā yadbhavatoktamananyaditi tadyuktam |",
  "SA15n1262:291": "yacca (bhavato)",
  "SA15n1262:292": "ktaṃ mayā sarvamuktaṃ nānujñāyata iti tadidānīṃ (bhavatā sārdhaṃ)",
  "SA15n1262:293": "vicārya nirdhāryate |",
  "SA15n1262:294": "sarvaṃ nānujñāyata iti yaduktaṃ bhavatā etadvacanaṃ sarvasminnantarbhavati na vā ? |",
  "SA15n1262:295": "yadi tāvatsarvasminnantarbhavati tadā bhavān svayaṃ svoktaṃ nānujānāti |",
  "SA15n1262:296": "yadi svayaṃ nānujānātyasmadarthaḥ svata eva siddho bhavedbhavavacanasya tu hāniḥ syāt |",
  "SA15n1262:297": "atha sarvasminnāntarbhavati tadā tasya sarvatvameva na syāt |",
  "SA15n1262:298": "yadi sarvatvameva na bhavet,",
  "SA15n1262:299": "tadā bhavatā yadananujñātaṃ tatsarvam |",
  "SA15n1262:300": "yadi sarvamananujñātaṃ tadā'smadartho bhavatā naivānanujñātaḥ |",
  "SA15n1262:301": "asmadarthaḥ siddho bhavatastu sarvasya pratiṣedhaḥ |",
  "SA15n1262:302": "iti prathamaṃ prakaraṇam |"
}