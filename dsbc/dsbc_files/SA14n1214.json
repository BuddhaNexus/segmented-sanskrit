{
  "SA14n1214:0": "XXI",
  "SA14n1214:1": "mārakarmaparivarto nāmaikaviṃśatitamaḥ |",
  "SA14n1214:2": "tatra khalvityādi |",
  "SA14n1214:3": "ayamekaviṃśatitamaḥ parivarto mārakarmaṇām |",
  "SA14n1214:4": "kasteṣāṃ prastāvaḥ ?",
  "SA14n1214:5": "navayānasaṃprasthitasya bodhisattvasya satyādhiṣṭhānaphalasampādanādinā mithyāmānotpādanāya bahudhā mārāḥ |",
  "SA14n1214:6": "parākramata ityayameṣāṃ prastāvaḥ |",
  "SA14n1214:7": "tatretyanantarokte satyādhiṣṭhāne |",
  "SA14n1214:8": "autsukyamiti prāptāvasarasya karmaṇaḥ karaṇārtha mutsāhaḥ |",
  "SA14n1214:9": "balamutsāhaśaktiḥ |",
  "SA14n1214:10": "tejaḥ prabhāvaśaktiḥ |",
  "SA14n1214:11": "kathaṃ tejovattaramiti yāvat |",
  "SA14n1214:12": "tasau matvartha iti bhatvāspadatvaṃ nāstīti bhatvena na bhavitavyam |",
  "SA14n1214:13": "tadyathā āyuṣmān sarasvān iti |",
  "SA14n1214:14": "evaṃ tarhi dīptyarthā[d]dravateḥ śatrantāt tarap |",
  "SA14n1214:15": "tejasā dīptataraṃ tejovattaramiti |",
  "SA14n1214:16": "autsukyamiti |",
  "SA14n1214:17": "ātmani bahumānam |",
  "SA14n1214:18": "āvamaṃsyata ityādi |",
  "SA14n1214:19": "avamāno'nādaraḥ |",
  "SA14n1214:20": "uccagghānamantarhāsaḥ |",
  "SA14n1214:21": "ullāpanaṃ manasānyatkaraṇam |",
  "SA14n1214:22": "kutsanaṃ doṣadarśitā |",
  "SA14n1214:23": "taṃsanaṃ doṣavāditā |",
  "SA14n1214:24": "sambodhāvitīti |",
  "SA14n1214:25": "itiśabdo hetau |",
  "SA14n1214:26": "mānaṃ janayiṣyatītyādi |",
  "SA14n1214:27": "atra saśabdasya sarvatretyarthaḥ |",
  "SA14n1214:28": "jananamutpādanam |",
  "SA14n1214:29": "vadhaṃnaṃ puraḥsarīkaraṇam |",
  "SA14n1214:30": "stambhanaṃ sthirīkaraṇam |",
  "SA14n1214:31": "bṛṃhaṇa paripuṣṭiḥ |",
  "SA14n1214:32": "utpādanamaccairnayanam |",
  "SA14n1214:33": "mānenetyādi |",
  "SA14n1214:34": "anyebhyo'dhikatvena cittasyonnatiḥ sāmānyena mānaḥ sa pūrvamuktaḥ |",
  "SA14n1214:35": "iha tu tadviśeṣā ucyante |",
  "SA14n1214:36": "yā tasya hīnādunnatiḥ sa mānaḥ |",
  "SA14n1214:37": "yādṛśādeva so'timānaḥ |",
  "SA14n1214:38": "yo punaḥ prakṛṣṭāt sa mānātimānaḥ |",
  "SA14n1214:39": "aprāpte'vaivartikatve prāptaṃ mayeti so'bhimānaḥ |",
  "SA14n1214:40": "yā punarabhūtairavaivartikaguṇairguṇavānasmīti sa mithyāmānaḥ |",
  "SA14n1214:41": "tathā rūpāniti mahābhūtān bodhisattvān dṛṣṭaveti pareṇa sambandhaḥ |",
  "SA14n1214:42": "śeṣaṃ teṣāmeva viśeṣaṇam |",
  "SA14n1214:43": "bhajiṣyata ityatra bhajeriṭpratiṣedho bhavati saṃjñāpūrvakasya vidheranityatvāt |",
  "SA14n1214:44": "tadeva mārabandhanamiti mānam |",
  "SA14n1214:45": "punaraparamityādi |",
  "SA14n1214:46": "nāmāpadeśaḥ saṃjñākathanam |",
  "SA14n1214:47": "mṛduko mṛdvindriyaḥ |",
  "SA14n1214:48": "āraṇyakatvādayo dhutaguṇāḥ |",
  "SA14n1214:49": "grāmādvahiḥ krośātparamaraṇyam |",
  "SA14n1214:50": "tatraiva sthānāt āraṇyakaḥ |",
  "SA14n1214:51": "piṇḍapātasyaiva bhojanāt piṇḍapātikaḥ |",
  "SA14n1214:52": "pāṃsukūlasyeva prāvaraṇāt pāṃsukūlikaḥ |",
  "SA14n1214:53": "madhyānhasyopānta eva bhojanāt khalu paścābhdaktikaḥ |",
  "SA14n1214:54": "ekāsana eva bhuṅkte ekāsanikaḥ |",
  "SA14n1214:55": "sakṛdāstīrṇe nityaṃ śayanāt yāthāsaṃstarikaḥ |",
  "SA14n1214:56": "tricīvarādadhikatyāgāt traicīvarikaḥ |",
  "SA14n1214:57": "śmaśānasamīpa eva sthānāt śmāśānikaḥ |",
  "SA14n1214:58": "vṛkṣamūla eva sthānāt vṛkṣamūlikaḥ |",
  "SA14n1214:59": "niṣadyayā rātrinayanān naiṣadyikaḥ |",
  "SA14n1214:60": "acchanno'vakāśo'bhyavakāśaḥ |",
  "SA14n1214:61": "tatraiva sthānāt ābhyavakāśikaḥ |",
  "SA14n1214:62": "aurṇakaśānakādereva prāvaraṇāt nāmantikaḥ |",
  "SA14n1214:63": "alpaiṣaṇāt alpecchaḥ |",
  "SA14n1214:64": "tāvataiva santoṣāt santuṣṭaḥ |",
  "SA14n1214:65": "ekākitvāt praviviktaḥ |",
  "SA14n1214:66": "dṛṣṭe dharme tasminneva janmani bhavo dṛṣṭadhārmikaḥ |",
  "SA14n1214:67": "tena ādekṣyati vyapadekṣyati |",
  "SA14n1214:68": "kathamityāha pūrvamapītyādi |",
  "SA14n1214:69": "yacchabdastasmādarthe |",
  "SA14n1214:70": "adhiṣṭhānamāviṣkaraṇam |",
  "SA14n1214:71": "dhutaguṇaiḥ saṃlekhaḥ karṣaṇaṃ dhanulekhanavat |",
  "SA14n1214:72": "manyāṃ karotīti ṇic |",
  "SA14n1214:73": "yac manyanā māna ityarthaḥ |",
  "SA14n1214:74": "śeṣaṃ subodhaṃ dhutaguṇāḥ saṃvidyanta iti yāvat |",
  "SA14n1214:75": "tasya khalvityādi |",
  "SA14n1214:76": "nāmādhiṣṭhāneneti kimatra nāma ?",
  "SA14n1214:77": "avinivartanīyaśabdastadguṇaśabdaśca |",
  "SA14n1214:78": "stambhābhibhūta iti stambho guruṣvagauravam |",
  "SA14n1214:79": "katamannāmadheyamityata āha |",
  "SA14n1214:80": "yadevetyādi |",
  "SA14n1214:81": "teneti bodhisattvena |",
  "SA14n1214:82": "anuvartitamityanuvicintitam |",
  "SA14n1214:83": "asyaiva nirdeśa uttarābhyām |",
  "SA14n1214:84": "anuvitarkitaṃ kiṃ me nāma bhavediti |",
  "SA14n1214:85": "anuvicāritamidaṃ me nāma bhavediti |",
  "SA14n1214:86": "vyākariṣyatītyāyākhyāsyati māraḥ |",
  "SA14n1214:87": "anuvartitamākāṅikṣatam |",
  "SA14n1214:88": "sametīti saṃvadati |",
  "SA14n1214:89": "kiṃ kena saṃvadatītyata āha nāmnā nāmeti |",
  "SA14n1214:90": "tataḥ kimityāha vyākṛta ityādi |",
  "SA14n1214:91": "saṃdhāvya saṃsṛtyeti tāsu tāsu durgatiṣūtpadya |",
  "SA14n1214:92": "yadi ceti cakāraḥ samuccayārthaḥ sūkṣmasūkṣmāṇīti durlakṣyāṇi |",
  "SA14n1214:93": "araṇyaṃ ca yathoktam |",
  "SA14n1214:94": "vanaprasthaṃ ca giriguhā ca śmaśānaṃ ca palālapuñjaśceti dvandvaḥ |",
  "SA14n1214:95": "ādiśabdādvṛkṣamūlādi |",
  "SA14n1214:96": "āraṇyakānītyaraṇye bhavāni |",
  "SA14n1214:97": "ata eva prāntāni vijanapadānīti vijanasthānāni |",
  "SA14n1214:98": "viviktāni śūnyāni |",
  "SA14n1214:99": "vivikto rahitaḥ grāmasyāntaḥ samīpamekadeśo vā |",
  "SA14n1214:100": "manasikāraviveka iti manasikārebhyo vivekaḥ |",
  "SA14n1214:101": "mṛdunā abhiniveśena niśritaḥ |",
  "SA14n1214:102": "madhyena ālīnaḥ |",
  "SA14n1214:103": "adhimātreṇa adhyavasitaḥ |",
  "SA14n1214:104": "tenaivātmotkarṣaṇāt adhyavasāyamāpannaḥ |",
  "SA14n1214:105": "saṃkīrṇo gṛhipravrajitaiḥ |",
  "SA14n1214:106": "ākīrṇaḥ pravrajitaireva bodhisattvacaṇḍālaḥ tairasaṃvāsyatvāt |",
  "SA14n1214:107": "bodhisattvadūṣī svadoṣeṇa teṣāṃ dūṣaṇāt |",
  "SA14n1214:108": "bodhisattvapratirūpako dehasāmyāt |",
  "SA14n1214:109": "bodhisattvaprativarṇiko nāmasāmyāt |",
  "SA14n1214:110": "bodhisattvakāraṇḍavakaḥ haṃseṣviva teṣvakṛṣṇeṣu kṛṣṇatvāt |",
  "SA14n1214:111": "cauraḥ śramaṇaveṣeṇa dharmagrahaṇāt |",
  "SA14n1214:112": "cauro bodhisattvānāmasammatatvāt |",
  "SA14n1214:113": "cauraḥ sadevakasya lokasya mithyādakṣiṇīyatvāt |",
  "SA14n1214:114": "tajjātīya ityādinā tāvadvaśasya sabhdirasevyatāṃ vistareṇāha |",
  "SA14n1214:115": "sthāma balam |",
  "SA14n1214:116": "anāryāḥ pāpāḥ |",
  "SA14n1214:117": "udvignaṃ bhītam |",
  "SA14n1214:118": "tatrāpi tāvaditi tādṛśepi |",
  "SA14n1214:119": "maṃtrāyamāṇenetyādinā maitryādicatuṣṭayaviṣayabhedānāha |",
  "SA14n1214:120": "evaṃ cetyādinā praṇidhānam |",
  "SA14n1214:121": "ayamapīti |",
  "SA14n1214:122": "yasya khalu punarityādikaḥ sarvaḥ |",
  "SA14n1214:123": "abhijñāyeti |",
  "SA14n1214:124": "atyutka[ṭaḥ] parākramaḥ puruṣakāraḥ |",
  "SA14n1214:125": "idamapītyādinā paścimamārakarmopasaṃhāraḥ ||",
  "SA14n1214:126": "mārakarmaṇāmabhidhāyakaḥ parivartastathoktaḥ ||",
  "SA14n1214:127": "āryāṣṭasāhasrikāyāḥ prajñāpāramitāyāḥ sāratamānāmni pañjikāyāṃ ratnākaraśāntiviracitāyāmekaviṃśatitamaḥ parivartaḥ ||"
}