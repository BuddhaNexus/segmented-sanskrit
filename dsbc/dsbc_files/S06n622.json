{
  "S06n622:0": "31",
  "S06n622:1": "279. śīlena udgata bhavanti samādhikāṅkṣī",
  "S06n622:2": "sthita gocare daśabalāna akhaṇḍaśīlāḥ |",
  "S06n622:3": "yāvanti saṃvarakriya anuvartayanti",
  "S06n622:4": "tāṃ sarvasattvahita bodhayi nāmayanti ||1 ||",
  "S06n622:5": "280. saci pratyayānarahabodhi spṛhāṃ janeti",
  "S06n622:6": "[duḥśīla bhoti] viduṣāṃ tatha chidracārī |",
  "S06n622:7": "atha bodhi uttamaśivāṃ pariṇāmayanti",
  "S06n622:8": "sthitu śīlapāramita kāmaguṇebhi yukto ||2 ||",
  "S06n622:9": "281. yo dharma bodhiguṇaāgamu sūratānāṃ",
  "S06n622:10": "so śīlaarthu guṇadharmasamanvitānām |",
  "S06n622:11": "yo dharma bodhiguṇahāni hitaṃkarāṇāṃ",
  "S06n622:12": "duḥśīlatā ayu prakāśitu nāyakena ||3 ||",
  "S06n622:13": "282. yadi pañca kāmaguṇa bhuñjati bodhisattvo",
  "S06n622:14": "buddhaṃ ca dharma śaraṇāgatu āryasaṃgham |",
  "S06n622:15": "sarvajñatā ca manasī bhaviṣyāmi buddho",
  "S06n622:16": "sthitu śīlapāramita vedayitavya vijño ||4 ||",
  "S06n622:17": "283. yadi kalpakoṭi daśabhī kuśalaiḥ pathebhi-",
  "S06n622:18": "ścaramāṇu pratyayarahatvaspṛhāṃ janeti |",
  "S06n622:19": "tada khaṇḍaśīlu bhavate api chidraśīlo",
  "S06n622:20": "pārājiko gurutaro ayu cittupādo ||5 ||",
  "S06n622:21": "284. rakṣantu śīla pariṇāmayi agrabodhiṃ",
  "S06n622:22": "na ca tena manyati na ātmana karṣayethā |",
  "S06n622:23": "ahusaṃjñatā ca parivarjita sattvasaṃjñā",
  "S06n622:24": "sthitu śīlapāramiti vucyati bodhisattvo ||6 ||",
  "S06n622:25": "285. yadi bodhisattva caramāṇu jināna mārge",
  "S06n622:26": "imi śīlavānimi duśīla karoti sattvān |",
  "S06n622:27": "nānātvasaṃjñaprasṛto paramaṃ duśīlo",
  "S06n622:28": "api chidraśīlu na tu so pariśuddhaśīlo ||7 ||",
  "S06n622:29": "286. yasyo na asti ahasaṃjña na sattvasaṃjñā",
  "S06n622:30": "saṃjñāvirāgu kutu tasya asaṃvaro'sti |",
  "S06n622:31": "yasyo na saṃvari asaṃvari manyanāsti",
  "S06n622:32": "ayu śīlasaṃvaru prakāśitu nāyakena ||8 ||",
  "S06n622:33": "287. yo evaśīlasamanvāgatu niṣprapañco",
  "S06n622:34": "anapekṣako bhavati sarvapriyāpriyeṣu |",
  "S06n622:35": "śirahastapāda tyajamāna adīnacitto",
  "S06n622:36": "sarvāstityāgi bhavate satataṃ alīno ||9 ||",
  "S06n622:37": "288. jñātvā ca dharmaprakṛtīṃ vaśikā nirātmyaṃ",
  "S06n622:38": "ātmāna māṃsa tyajamānu adīnacitto |",
  "S06n622:39": "prāgeva vastu tada bāhira nātyajeyā",
  "S06n622:40": "asthānameta yadi matsari so kareyā ||10 ||",
  "S06n622:41": "289. ahasaṃjñatastu mamatā bhavate ca rāgo",
  "S06n622:42": "kutu tyāgabuddhi bhaviṣyati sā muhānām |",
  "S06n622:43": "mātsarya preta bhavate upapadyayātī",
  "S06n622:44": "athavā manuṣya tada bhoti daridrarūpo ||11 ||",
  "S06n622:45": "290. tada bodhisattva imi jñātva daridrasattvān",
  "S06n622:46": "dānādhimukta bhavatī sada muktatyāgī |",
  "S06n622:47": "catvāri dvīpi samalaṃkṛtu kheṭatulyaṃ",
  "S06n622:48": "dattvā udagra bhavate na hi dvīpalabdho ||12 ||",
  "S06n622:49": "291. dānaṃ daditva vidu paṇḍitu bodhisattvo",
  "S06n622:50": "yāvanti sattva tribhave samanvāharitvā |",
  "S06n622:51": "sarveṣu teṣu bhavate ayu dattadānaṃ",
  "S06n622:52": "taṃ cāgrabodhi pariṇāmayate jagārtham ||13 ||",
  "S06n622:53": "292. na ca vastuniśrayu karoti daditva dānaṃ",
  "S06n622:54": "vidu pāku naiva pratikāṅkṣati so kadācit |",
  "S06n622:55": "evaṃ tyajitva bhavate vidu sarvatyāgī",
  "S06n622:56": "alpaṃ tyajitva labhate bahu aprameyam ||14 ||",
  "S06n622:57": "293. yāvanta sattva tribhave nikhilena asti",
  "S06n622:58": "te sarvi dāna dadayanti anantakalpān |",
  "S06n622:59": "buddhānuloki vidu nārhatipratyayānāṃ",
  "S06n622:60": "yāvanti śrāvakaguṇān parikalpa sthāne ||15 ||",
  "S06n622:61": "294. yaśco upāyakuśalo vidu bodhisattvo",
  "S06n622:62": "teṣāṃ sa puṇyakriyavastvanumodayitvā |",
  "S06n622:63": "sattvārtha agravarabodhayi nāmayeyā",
  "S06n622:64": "abhibhoti sarvajagatī pariṇāmayukto ||16 ||",
  "S06n622:65": "295. kācasya vā maṇina rāśi siyā mahanto",
  "S06n622:66": "vaiḍūryaratna abhibhoti sa sarva eko |",
  "S06n622:67": "emeva sarvajagatī pṛthu dānaskandho",
  "S06n622:68": "abhibhoti sarvapariṇāmaku bodhisattvo ||17 ||",
  "S06n622:69": "296. yadi bodhisattva dadamāna jagasya dānaṃ",
  "S06n622:70": "mamatāṃ na tatra karayenna ca vastuprema |",
  "S06n622:71": "tatu vardhate kuśalamūla mahānubhāvo",
  "S06n622:72": "candro va tatra prabhamaṇḍalu śuklapakṣe ||18 ||",
  "S06n622:73": "bhagavatyāṃ ratnaguṇasaṃcayagāthāyāṃ dharmodgataparivarto nāmaikatriṃśatimaḥ ||"
}