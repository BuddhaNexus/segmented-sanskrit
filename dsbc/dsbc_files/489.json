{
    "489:0": "buddhānusmṛtiparivartaḥ |",
    "489:1": "atha khalu candraprabhaḥ kumārabhūto bhagavantametadavocat-samādhiḥ samādhiriti bhagavannucyate |",
    "489:2": "katamasyaitaddharmasyādhivacanaṃ samādhiriti ?",
    "489:3": "evamukte bhagavāṃścandraprabhaṃ kumārabhūtametadavocat-samādhiḥ samādhiriti kumāra ucyate yaduta cittanidhyāptiḥ |",
    "489:4": "anupapattiḥ |",
    "489:5": "apratisaṃdhiḥ |",
    "489:6": "pratisaṃdhijñānam |",
    "489:7": "apahṛtabhāratā |",
    "489:8": "tathāgatajñānam |",
    "489:9": "buddhavṛṣabhitā |",
    "489:10": "rāgacikitsā |",
    "489:11": "doṣavyupaśamaḥ |",
    "489:12": "mohasya prahāṇam |",
    "489:13": "yuktayogitā |",
    "489:14": "ayuktavivarjanatā |",
    "489:15": "akuśaladharmacchandaḥ |",
    "489:16": "saṃsārānmokṣakāmatā |",
    "489:17": "adhyāśayapratipattiḥ |",
    "489:18": "jāgarikāyā āsevanam |",
    "489:19": "prahāṇasyānutsargaḥ |",
    "489:20": "ārakṣā śukladharmāṇām |",
    "489:21": "upapattiṣvaviśvāsaḥ |",
    "489:22": "anabhisaṃskāraḥ |",
    "489:23": "karmaṇāmādhyātmikānāmāyatanānāmamanasikāraḥ |",
    "489:24": "bāhyānāmāyatanānāmasamudācāraḥ |",
    "489:25": "ātmano'nutkarṣaṇam |",
    "489:26": "pareṣāmapaṃsanatā |",
    "489:27": "kuśaleṣvanadhyavasānam |",
    "489:28": "pṛthagjaneṣvaviśvāsaḥ |",
    "489:29": "śīlasya niṣyandaḥ |",
    "489:30": "durāsadatā |",
    "489:31": "mahaujaskatā |",
    "489:32": "ātmajñānam |",
    "489:33": "acapalatā |",
    "489:34": "īryāpathasaṃpadavasthānam |",
    "489:35": "avyāpādaḥ |",
    "489:36": "apāruṣyam |",
    "489:37": "pareṣvanutpīḍā |",
    "489:38": "mitrāṇāmanurakṣaṇā |",
    "489:39": "guhyamantrāṇāmārakṣaṇā |",
    "489:40": "avihiṃsā|",
    "489:41": "śīlavatāmanutpīḍanā |",
    "489:42": "ślakṣṇavacanatā |",
    "489:43": "sarvatraidhātuke aniḥśritatā |",
    "489:44": "sarvadharmeṣu śūnyatā |",
    "489:45": "ānulomikī kṣāntiḥ |",
    "489:46": "sarvajñajñāne tīvracchandatā samādhiḥ samādhiriti kumāra ucyate |",
    "489:47": "yā eveṣvevaṃrūpeṣu dharmeṣu pratipattirapratipattiḥ,",
    "489:48": "ayaṃ sa kumāra ucyate samādhiriti ||",
    "489:49": "atha khalu bhagavāṃstasyāṃ velāyāmimā gāthā abhāṣata-",
    "489:50": "apāvṛtaṃ me amṛtasya dvāram",
    "489:51": "ācakṣito dharmasvabhāvu yādṛśaḥ |",
    "489:52": "nidarśitā me upapatti yādṛśī",
    "489:53": "prakāśitā nirvṛti sānuśaṃsā || 1 ||",
    "489:54": "vivarjanīyāḥ sada pāpamitrāḥ",
    "489:55": "kalyāṇamitrāśca niṣevitavyāḥ |",
    "489:56": "vaneṣu vastavya gaṇān jahitvā",
    "489:57": "maitraṃ ca cittaṃ sada bhāvanīyam || 2 ||",
    "489:58": "śuddhaṃ ca śīlaṃ sada rakṣitavyaṃ",
    "489:59": "dhūteṣu puṣṭiḥ sada vinditavyā |",
    "489:60": "tyāgaśca prajñā ca niṣevitavyā |",
    "489:61": "na durlabho eṣa samādhi bheṣyati || 3 ||",
    "489:62": "tato labhitvā ima śāntabhūmi",
    "489:63": "yasyāmabhūmiḥ pṛthu śrāvakāṇām |",
    "489:64": "pratyakṣabhūtā sugatasya dharma",
    "489:65": "pratilapsyathā buddhaguṇānacintiyān || 4 ||",
    "489:66": "dṛṣṭvā narān bhājanabuddhimantān",
    "489:67": "tān bodhicittasmi samādahetha |",
    "489:68": "anuttare jñāni pratiṣṭhapitvā",
    "489:69": "na durlabho eṣa samādhirājaḥ || 5 ||",
    "489:70": "yasyārthi īrṣā puna saṃjaneyyā",
    "489:71": "āhāri niṣyandiha pratyavekṣataḥ |",
    "489:72": "paryeṣṭitaśco paribhogataśca",
    "489:73": "na durlabho eṣa samādhi bheṣyate || 6 ||",
    "489:74": "samādhirājo yadi vaiṣa śūnyato",
    "489:75": "viśuddhaśīlānayu mūrdhni tiṣṭhati |",
    "489:76": "svabhāvato dharma sadā samāhitā",
    "489:77": "bālā na jānanti ayuktayogāḥ || 7 ||",
    "489:78": "yeṣāmayaṃ śānta samādhiriṣṭo",
    "489:79": "na teṣa jātu bhayabuddhi tiṣṭhati |",
    "489:80": "sadānupaśyanti narāṇamuttama-",
    "489:81": "mimāṃ niṣevitva praśāntabhūmim || 8 ||",
    "489:82": "ākārato yaḥ smarate tathāgatān",
    "489:83": "sa bhoti śāntendriyu śāntamānasaḥ |",
    "489:84": "abhrāntacittaḥ satataṃ samāhitaḥ",
    "489:85": "śrutena jñānena ca sāgaropamaḥ || 9 ||",
    "489:86": "asmin samādhau hi pratiṣṭhihittvā",
    "489:87": "yaścaṃkrame caṃkrami bodhisattvaḥ |",
    "489:88": "sa paśyati buddhasahasrakoṭiya-",
    "489:89": "staduttare yāttika gaṅgavālukāḥ || 10 ||",
    "489:90": "unmādu gaccheya narasya cittaṃ",
    "489:91": "yo buddhadharmāṇa pramāṇu gṛhṇīyāt |",
    "489:92": "naivāpramāṇasya pramāṇamasti",
    "489:93": "acintiyā sarvaguṇehi nāyakāḥ || 11 ||",
    "489:94": "na so'sti sattvo daśasu diśāsu",
    "489:95": "yo lokanāthena samaḥ kutottari |",
    "489:96": "sarve hi sarvajñaguṇarupeta-",
    "489:97": "mākāṅkṣatha lapsyatha buddhajñānam || 12 ||",
    "489:98": "suvarṇavarṇena samucchrayeṇa",
    "489:99": "samantaprāsādiku lokanāthaḥ |",
    "489:100": "yasyātra ālambani cittu vartate",
    "489:101": "samāhitaḥ socyati bodhisattvaḥ || 13 ||",
    "489:102": "asaṃskṛtaṃ saṃskṛtu jñātva vijño",
    "489:103": "nimittasaṃjñāya vibhāvitāya |",
    "489:104": "so ānimitte bhavati pratiṣṭhitaḥ",
    "489:105": "prajānatī śūnyaka sarvadharmān || 14 ||",
    "489:106": "yo dharmakāye bhavati pratiṣṭhito",
    "489:107": "abhāva jānāti sa sarvabhāvān |",
    "489:108": "abhāvasaṃjñāya vibhāvitāya",
    "489:109": "na rūpakāyena jinendra paśyati || 15 ||",
    "489:110": "ārocayāmi prativedayāmi vo",
    "489:111": "yathā yathā bahu ca vitarkayennaraḥ |",
    "489:112": "tathā tathā bhavati tannimittacitta-",
    "489:113": "stehi vitarkehi tanniśritehi || 16 ||",
    "489:114": "evaṃ munīndraṃ smarato narasya",
    "489:115": "ākārato jñānato aprameyataḥ |",
    "489:116": "anusmṛtiṃ bhāvayataḥ sadā ca",
    "489:117": "tannimnacittaṃ bhavatī tatproṇam || 17 ||",
    "489:118": "sa caṃkramastho na niṣadyamāśrita",
    "489:119": "ākāṅkṣate puruṣavarasya jñānam |",
    "489:120": "ākāṅkṣamāṇaḥ praṇigheti bodhaye",
    "489:121": "bhaviṣyahaṃ loki niruttaro jinaḥ || 18 ||",
    "489:122": "sa buddha saṃjānati buddha paśyate",
    "489:123": "buddhāna co dharmata pratyavekṣate |",
    "489:124": "iha samādhismi pratiṣṭhihitvā",
    "489:125": "namasyate buddha mahānubhāvān || 19 ||",
    "489:126": "kāyena vācā ca prasanna mānasā",
    "489:127": "buddhāna varṇaṃ bhaṇatī abhīkṣṇam |",
    "489:128": "tathāhi so bhāvitacittasaṃtatī |",
    "489:129": "rātriṃdivaṃ paśyati lokanāthān || 20 ||",
    "489:130": "yadāpi so bhoti gilāna āturaḥ",
    "489:131": "pravartate vedana māraṇāntikā |",
    "489:132": "na buddhamārabhya smṛtiḥ pramuṣyate",
    "489:133": "na vedanābhiranusaṃharīyati || 21 ||",
    "489:134": "tathā hi tena vicinitva jñātā",
    "489:135": "anāgatā āgata dharmaśūnyatā |",
    "489:136": "so tādṛśe dharmanaye pratiṣṭhito",
    "489:137": "na khidyate citta carantu cārikām || 22 ||",
    "489:138": "tasmācchruṇitvā imu ānuśaṃsā",
    "489:139": "janetha chandamatulāya bodhaye |",
    "489:140": "mā paścakāle paritāpu bheṣyata",
    "489:141": "sudurlabhaṃ sugatavarāṇa darśanam || 23 ||",
    "489:142": "ahaṃ ca bhāṣeya praṇīta dharmaṃ",
    "489:143": "yūyaṃ ca śrutvāna samācarethāḥ |",
    "489:144": "bhaiṣajya vastrāṃ ca gṛhītva āturo-",
    "489:145": "'panetu vyādhiṃ na prabhoti ātmanaḥ || 24 ||",
    "489:146": "tasmādvidhijñena vicakṣaṇena",
    "489:147": "imaṃ samādhiṃ pratikāṅkṣatā sadā |",
    "489:148": "śīlaṃ śrutaṃ tyāgu niṣevitavyaṃ",
    "489:149": "na durlabho eṣa samādhi bheṣyati || 25 ||",
    "489:150": "iti śrīsamādhirāje buddhānusmṛtiparivarto nāma caturthaḥ ||"
}