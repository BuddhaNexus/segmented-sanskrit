{
    "915:0": "buddhacarita",
    "915:1": "CANTO 1",
    "915:2": "aikṣvāka ikṣvākusamaprabhāvaḥ",
    "915:3": "śākyeṣvaśakyeṣu viśuddhavṛttaḥ|",
    "915:4": "priyaḥ śaraccandra iva prajānāṃ",
    "915:5": "śuddhodano nāma babhūva rājā||1||",
    "915:6": "tasyendrakalpasya babhūva patnī",
    "915:7": "dīptyā narendrasya samaprabhāvā|",
    "915:8": "padmeva lakṣmīḥ pṛthivīva dhīrā",
    "915:9": "māyeti nāmnānupameva māyā||2||",
    "915:10": "sārdha tayāsau vijahāra rājā",
    "915:11": "nācintayadvaiśravaṇasya lakṣmīm|",
    "915:12": "tataśca vidheva samādhiyuktā",
    "915:13": "garbha dadhe pāpavivarjitā sā||3||",
    "915:14": "prāggarbhadhānnānmanujendrapatnī",
    "915:15": "sitaṃ dadarśa dviparājamekam|",
    "915:16": "svapne viśantaṃ vapurātmanaḥ sā",
    "915:17": "na tannimittaṃ samavāpa tāpam||4||",
    "915:18": "sā tasya devapratimasya devī",
    "915:19": "garbheṇa vaṃśaśriyamudvahantī|",
    "915:20": "śramaṃ na lebhe na śucaṃ na māyāṃ",
    "915:21": "gantuṃ vanaṃ sā nibhṛtaṃ cakāṅkṣa||5||",
    "915:22": "sā lumbinī nāma vanāntabhūmiṃ",
    "915:23": "citradrūmāṃ caitrarathābhirāmām|",
    "915:24": "dhyānānukūlāṃ vijanāmiyeṣa",
    "915:25": "tasyāṃ nivāsāya nṛpaṃ babhāṣe||6||",
    "915:26": "āryāśayāṃ tāṃ pravaṇāṃ ca dharme",
    "915:27": "vijñāya kautūhalaharṣapūrṇaḥ|",
    "915:28": "śivāt purād bhūmipatirjagāma",
    "915:29": "tatprītaye nāpi vihārahetoḥ||7||",
    "915:30": "tasminvane śrīmati rājapatnī",
    "915:31": "prasūtikālaṃ samavekṣamāṇā|",
    "915:32": "śayyāṃ vitānopahitāṃ prapede",
    "915:33": "nārīsahasrairabhinandyamānā||8||",
    "915:34": "tataḥ prasannaśca babhūva puṣya-",
    "915:35": "stasyāśca devyā vratasaṃskṛtāyāḥ|",
    "915:36": "pārśvātsuto lokahitāya jajñe",
    "915:37": "nirvedanaṃ caiva nirāmayaṃ ca||9||",
    "915:38": "ūroryathaurvasya pṛthośca hastā-",
    "915:39": "nmāndhāturindrapratimasya mūrdhnaḥ|",
    "915:40": "kakṣīvataścaiva bhujāṃsadeśā-",
    "915:41": "ttathāvidhaṃ tasya babhūva janma||10||",
    "915:42": "krameṇa garbhādabhiniḥsṛtaḥ san",
    "915:43": "babhau cyutaḥ khādiva yonyajātaḥ|",
    "915:44": "kalpeṣvanekeṣu ca bhāvitātmā",
    "915:45": "yaḥ saṃprajānansuṣuve na mūḍhaḥ||11||",
    "915:46": "dīptyā ca dhairyeṇa ca yo rarāja",
    "915:47": "bālo ravibhūmimivāvatīrṇaḥ|",
    "915:48": "tathātidīpto'pi nirīkṣyamāṇo",
    "915:49": "jahāra cakṣūṃṣi yathā śaśāṅkaḥ||12||",
    "915:50": "sa hi svagātraprabhayojjvalantyā",
    "915:51": "dīpaprabhāṃ bhāskaravanmumoṣa|",
    "915:52": "mahārhajāmbūnadacāruvarṇo",
    "915:53": "vidyotayāmāsa diśaśca sarvāḥ||13||",
    "915:54": "anākulānyubjasamudgatāni",
    "915:55": "niṣpeṣavadvyāyatavikramāṇi|",
    "915:56": "tathaiva dhīrāṇi padāni sapta",
    "915:57": "saptarṣitārāsadṛśo jagāma||14||",
    "915:58": "bodhāya jāto'smi jagaddhitārtha-",
    "915:59": "mantyā bhavotpattiriyaṃ mameti|",
    "915:60": "caturdiśaṃ siṃhagatirvilokya",
    "915:61": "vāṇī ca bhavyārthakarīmuvāca||15||",
    "915:62": "khātprasrūte candramarīciśubhre",
    "915:63": "dve vāridhāre śiśiroṣṇavīrye|",
    "915:64": "śarīrasaṃsparśasukhāntarāya",
    "915:65": "nipetaturmūrdhani tasya saumye||16||",
    "915:66": "śrīmadvitāne kanakojjvalāṅge",
    "915:67": "vaiḍūryapāde śayane śayānam|",
    "915:68": "yadgauravātkāñcanapadmahastā",
    "915:69": "yakṣādhipāḥ saṃparivārya tasthuḥ||17||",
    "915:70": "adṛśyabhāvāśca divaukasaḥ khe",
    "915:71": "yasya prabhāvātpraṇataiḥ śīrobhiḥ|",
    "915:72": "ādhārayan pāṇḍaramātapatraṃ",
    "915:73": "bodhāya jepuḥ paramāśiṣaśca||18||",
    "915:74": "mahoragā dharmaviśeṣatarṣād",
    "915:75": "buddheṣvatīteṣu kṛtādhikārāḥ|",
    "915:76": "yamavyajan bhaktiviśiṣṭanetrā",
    "915:77": "mandārapuṣpaiḥ samavākiraṃśca||19||",
    "915:78": "tathāgatotpādaguṇena tuṣṭāḥ",
    "915:79": "śuddhādhivāsāśca viśuddhasattvāḥ|",
    "915:80": "devā nanandurvigate'pi rāge",
    "915:81": "magnasya duḥkhe jagato hitāya||20||",
    "915:82": "yasya prasūtau girirājakīlā",
    "915:83": "vātāhatā nauriva bhūścacāla|",
    "915:84": "sacandanā cotpalapadmagarbhā",
    "915:85": "papāta vṛṣṭirgaganādanabhrāt||21||",
    "915:86": "vātā vavuḥ sparśasukhā manojñā",
    "915:87": "divyāni vāsāṃsyavapātayantaḥ|",
    "915:88": "sūryaḥ sa evābhyadhikaṃ cakāśe",
    "915:89": "jajvāla saumyārciranīrito'gniḥ||22||",
    "915:90": "prāguttare cāvasathapradeśe",
    "915:91": "kūpaḥ svayaṃ prādurabhūtsitāmbuḥ",
    "915:92": "antaḥpurāṇyāgatavismayāni",
    "915:93": "yasmin kriyāstīrtha iva pracakruḥ||23||",
    "915:94": "dharmārthibhirbhūtagaṇaiśca divyai-",
    "915:95": "staddarśanārtha vanamāpupūre|",
    "915:96": "kautūhalenaiva ca pādapebhyaḥ",
    "915:97": "puṣpāṇyakāle'pyavapātayadbhiḥ||24||",
    "915:98": "bhūtairasaumyaiḥ parityaktahiṃsai-",
    "915:99": "rnākāri pīḍā svagaṇe pare vā|",
    "915:100": "loke hi sarvāśca vinā prayāsaṃ",
    "915:101": "rujo narāṇāṃ śamayāṃbabhūvuḥ||25||",
    "915:102": "kalaṃ praṇeduḥ mṛgapakṣiṇaśca",
    "915:103": "śāntāmbuvāhāḥ sarito babhūvuḥ|",
    "915:104": "diśaḥ prasedurvimale nirabhre",
    "915:105": "vihāyase dundubhayo nineduḥ||26||",
    "915:106": "lokasya mokṣāya gurau prasūte",
    "915:107": "śamaṃ prapede jagadavyavastham|",
    "915:108": "prāpyeva nāthaṃ khalu nītimantam",
    "915:109": "eko na māro mudamāpa loke||27||",
    "915:110": "divyādbhutaṃ janma nirīkṣya tasya",
    "915:111": "dhīro'pi rājā bahukṣobhametaḥ|",
    "915:112": "snehādasau bhītipramodajanye",
    "915:113": "dve vāridhāre mumuce narendraḥ||28||",
    "915:114": "amānuṣī tasya niśamya śaktiṃ",
    "915:115": "mātā prakṛtyā karuṇārdracittā|",
    "915:116": "prītā ca bhītā ca babhūva devī",
    "915:117": "śītoṣṇamiśreva jalasya dhārā||29||",
    "915:118": "nirīkṣamāṇā bhayahetumeva",
    "915:119": "dhyātuṃ na śekuḥ vanitāḥ pravṛddhāḥ|",
    "915:120": "pūtāśca tā maṅgalakarma cakruḥ",
    "915:121": "śivaṃ yayācuḥ śiśave suraughān||30||",
    "915:122": "viprāśca khyātāḥ śrutaśīlavāgbhiḥ",
    "915:123": "śrutvā nimittāni vicārya samyak|",
    "915:124": "mukhaiḥ praphullaiścakitaiśca dīptaiḥ|",
    "915:125": "bhītaprasannaṃ nṛpametya procuḥ||31||",
    "915:126": "śamepsavo ye bhuvi santi sattvāḥ|",
    "915:127": "putraṃ vinecchanti guṇaṃ na kañcit|",
    "915:128": "tvatputra eṣo'sti kulapradīpaḥ|",
    "915:129": "nṛtyotsavaṃ tvadya vidhehi rājan||32||",
    "915:130": "vihāya cintāṃ bhava śāntacitto",
    "915:131": "modasva vaṃśastava vṛddhibhāgī|",
    "915:132": "lokasya netā tava putrabhūtaḥ",
    "915:133": "duḥkhārditānāṃ bhuvi eṣa trātā||33||",
    "915:134": "dīpaprabho'yaṃ kanakojjvalāṅgaḥ",
    "915:135": "sulakṣaṇairyaistu samanvito'sti|",
    "915:136": "nidhirguṇānāṃ samaye sa gatāṃ",
    "915:137": "buddharṣibhāvaṃ paramāṃ śriyaṃ vā||34||",
    "915:138": "icchedasau vai pṛthivīśriyaṃ cet",
    "915:139": "nyāyena jitvā pṛthivī samagrām|",
    "915:140": "bhūpeṣu rājeta yathā prakāśaḥ",
    "915:141": "graheṣu sarveṣu ravervibhāti||35||",
    "915:142": "mokṣāya cedvā vanameva gacchet|",
    "915:143": "tattvena samyak sa vijitya sarvān|",
    "915:144": "matān pṛthivyāṃ bahumānametaḥ",
    "915:145": "rājeta śaileṣu yathā sumeruḥ||36||",
    "915:146": "yathā hiraṇyaṃ śuci dhātumadhye",
    "915:147": "merurgirīṇāṃ sarasāṃ samudraḥ|",
    "915:148": "tārāsu candrastapatāṃ ca sūryaḥ",
    "915:149": "putrastathā te dvipadeṣu varyaḥ||37||",
    "915:150": "tasyākṣiṇī nirnimiṣe viśāle",
    "915:151": "snigdhe ca dīpte vimale tathaiva|",
    "915:152": "niṣkampakṛṣṇāyataśuddhapakṣme",
    "915:153": "draṣṭuṃ samarthe khalu sarvabhāvān||38||",
    "915:154": "kasmānnu hetoḥ kathitānbhavadbhiḥ",
    "915:155": "varānguṇān dhārayate kumāraḥ|",
    "915:156": "prāpurna pūrve munayo nṛpāśca",
    "915:157": "rājñeti pṛṣṭā jagadus dvijāstam||39||",
    "915:158": "khyātāni karmāṇi yaśo matiśca",
    "915:159": "pūrva na bhūtāni bhavanti paścāt|",
    "915:160": "guṇā hi sarvāḥ prabhavanti hetoḥ",
    "915:161": "nidarśanānyatra ca no nibodha||40||",
    "915:162": "yadrājaśāstraṃ bhṛguraṅgirā vā",
    "915:163": "na cakraturvaśakarāvṛṣī tau|",
    "915:164": "tayoḥ sutau saumya sasarjatusta-",
    "915:165": "tkālena śukraśca bṛhaspatiśca||41||",
    "915:166": "sārasvataścāpi jagāda naṣṭaṃ",
    "915:167": "vedaṃ punaryaṃ dadṛśurna pūrve|",
    "915:168": "vyāsastathainaṃ bahudhā cakāra",
    "915:169": "na yaṃ vasiṣṭhaḥ kṛtavānaśaktiḥ||42||",
    "915:170": "vālmīkirādau ca sasarja padyaṃ",
    "915:171": "jagrantha yanna cyavano maharṣiḥ|",
    "915:172": "cikitsitaṃ yacca cakāra nātriḥ",
    "915:173": "paścāttadātreya ṛṣirjagāda||43||",
    "915:174": "yacca dvijatvaṃ kuśiko na lebhe",
    "915:175": "tadgādhinaḥ sunūravāpa rājan|",
    "915:176": "velāṃ samudre sagaraśca dadhre",
    "915:177": "nekṣvākavo yāṃ prathamaṃ babandhuḥ||44||",
    "915:178": "ācāryakaṃ yogavidhau dvijānā-",
    "915:179": "maprāptamanyairjanako jagāma|",
    "915:180": "khyātāni karmāṇi ca yāni śaureḥ",
    "915:181": "śūrādayasteṣvabalā babhūvuḥ||45||",
    "915:182": "tasmātpramāṇaṃ na vayo na vaṃśaḥ",
    "915:183": "kaścitkvacicchraiṣṭhyamupaiti loke|",
    "915:184": "rājñāmṛṣīṇāṃ ca hi tāni tāni",
    "915:185": "kṛtāni putrairakṛtāni pūrvaiḥ||46||",
    "915:186": "evaṃ nṛpaḥ pratyayitairdvijaistai-",
    "915:187": "rāśvāsitaścāpyabhinanditaśca|",
    "915:188": "śaṅkāmaniṣṭāṃ vijahau manastaḥ",
    "915:189": "praharṣamevādhikamāruroha|| 47||",
    "915:190": "prītaśca tebhyo dvijasattamebhyaḥ",
    "915:191": "satkārapūrva pradadau dhanāni|",
    "915:192": "bhūyādayaṃ bhūmipatiryathokto",
    "915:193": "yāyājjarāmetya vanāni ceti||48||",
    "915:194": "atho nimittaiśca tapobalācca",
    "915:195": "tajjanma janmāntakarasya buddhvā|",
    "915:196": "śākyeśvarasyālayamājagāma",
    "915:197": "saddharmatarṣādasito maharṣiḥ||49||",
    "915:198": "taṃ brahmavidbrahmavidaṃ jvalantaṃ",
    "915:199": "brāhmyā śriyā caiva tapaḥśriyā ca|",
    "915:200": "rājño gururgauravasatkriyābhyāṃ",
    "915:201": "praveśāyāmāsa narendrasadma||50||",
    "915:202": "sa pārthivāntaḥpurasaṃnikarṣa",
    "915:203": "kumārajanmāgataharṣavegaḥ|",
    "915:204": "viveśa dhīro vanasaṃjñayeva",
    "915:205": "tapaḥprakarṣācca jarāśrayācca||51||",
    "915:206": "tato nṛpastaṃ munimāsanasthaṃ",
    "915:207": "pādyārdhyapūrvaṃ pratipūjya samyak|",
    "915:208": "nimantrayāmāsa yathopacāraṃ",
    "915:209": "purā vasiṣṭhaṃ sa ivāntidevaḥ||52||",
    "915:210": "dhanyo'smyanugrāhyamidaṃ kulaṃ me|",
    "915:211": "yanmāṃ didṛkṣurbhagavānupetaḥ|",
    "915:212": "ājñāpyatāṃ kiṃ karavāṇi saumya",
    "915:213": "śiṣyo'smi viśrambhitumarhasīti||53||",
    "915:214": "evaṃ nṛpeṇopanimantritaḥ sa-",
    "915:215": "nsarveṇa bhāvena muniryathāvat|",
    "915:216": "sa vismayotphullaviśāladṛṣṭi-",
    "915:217": "rgambhīradhīrāṇi vacāṃsyuvāca||54||",
    "915:218": "mahātmani tvayyupapannameta-",
    "915:219": "tpriyātithau tyāgini dharmakāme|",
    "915:220": "sattvānvayajñānavayo'nurūpā",
    "915:221": "snigdhā yadevaṃ mayi me matiḥ syāt||55||",
    "915:222": "etacca tadyena nṛparṣayaste|",
    "915:223": "dharmeṇa sūkṣmeṇa dhanānyavāpya|",
    "915:224": "nityaṃ tyajanto vidhivadbabhūvu-",
    "915:225": "stapobhirāḍhyā vibhavairdaridrāḥ||56||",
    "915:226": "prayojanaṃ yattu mamopayāne",
    "915:227": "tanme śṛṇu prītimupehi ca tvam|",
    "915:228": "divyā mayādityapathe śrutā vā-",
    "915:229": "gbodhāya jātastanayastaveti||57||",
    "915:230": "śrutvā vacastacca manaśca yuktvā",
    "915:231": "jñātvā nimittaiśca tato'smyupetaḥ|",
    "915:232": "didṛkṣayā śākyakuladhvajasya",
    "915:233": "śakradhvajasyeva samucchritasya||58||",
    "915:234": "ityetadevaṃ vacanaṃ niśamya",
    "915:235": "praharṣasaṃbhrāntagatinarendraḥ |",
    "915:236": "ādāya dhātryaṅkagataṃ kumāraṃ",
    "915:237": "saṃdarśayāmāsa tapodhanāya||59||",
    "915:238": "cakrāṅkapādaṃ sa tato maharṣi-",
    "915:239": "rjālāvanaddhāṅgulipāṇipādam|",
    "915:240": "sorṇabhruvaṃ vāraṇavastikośaṃ",
    "915:241": "savismayaṃ rājasutaṃ dadarśa||60||",
    "915:242": "dhātryaṅkasaṃviṣṭamavekṣya cainaṃ",
    "915:243": "devyaṅkasaṃviṣṭamivāgnisūnum|",
    "915:244": "babhūva pakṣmāntavicañcitāśru-",
    "915:245": "rniśvasya caiva tridivonmukho'bhūt||61||",
    "915:246": "dṛṣṭvāsitaṃ tvaśrupariplutākṣaṃ|",
    "915:247": "snehāttanūjasya nṛpaścakampe|",
    "915:248": "sagadgadaṃ bāṣpakaṣāyakaṇṭhaḥ",
    "915:249": "papraccha sa prāñjalirānatāṅgaḥ||62||",
    "915:250": "alpāntaraṃ yasya vapuḥ surebhyo",
    "915:251": "bavhadbhutaṃ yasya ca janma dīptam|",
    "915:252": "yasyottamaṃ bhāvinamāttha cārtha",
    "915:253": "taṃ prekṣya kasmāttava dhīra bāṣpaḥ||63||",
    "915:254": "api sthirāyurbhagavan kumāraḥ",
    "915:255": "kaccinna śokāya mama prasūtaḥ|",
    "915:256": "labdhaḥ kathaṃcitsalilāñjalirme",
    "915:257": "na khalvimaṃ pātumupaiti kālaḥ||64||",
    "915:258": "apyakṣayaṃ me yaśaso nidhānaṃ",
    "915:259": "kacciddhruvo me kulahastasāraḥ|",
    "915:260": "api prayāsyāmi sukhaṃ paratra",
    "915:261": "supto'pi putre'nimiṣaikacakṣuḥ||65||",
    "915:262": "kaccinna me jātamaphullameva",
    "915:263": "kulapravālaṃ pariśoṣabhāgi|",
    "915:264": "kṣipraṃ vibho brūhi na me'sti śāntiḥ",
    "915:265": "snehaṃ sute vetsi hi bāndhavānām||66||",
    "915:266": "ityāgatāvegamaniṣṭabuddhyā",
    "915:267": "buddhvā narendraṃ sa munirbabhāṣe|",
    "915:268": "mā bhūnmatiste nṛpa kācidanyā",
    "915:269": "niḥsaṃśayaṃ tadyadavocamasmi||67||",
    "915:270": "nāsyānyathātvaṃ prati vikriyā me",
    "915:271": "svāṃ vañcanāṃ tu prati viklavo'smi|",
    "915:272": "kālo hi me yātumayaṃ ca jāto",
    "915:273": "jātikṣayasyāsulabhasya boddhā||68||",
    "915:274": "vihāya rājyaṃ viṣayeṣvanāstha-",
    "915:275": "stīvraiḥ prayatnairadhigamya tattvam|",
    "915:276": "jagatyayaṃ mohatamo nihantuṃ",
    "915:277": "jvaliṣyati jñānamayo hi sūryaḥ||69||",
    "915:278": "duḥkhārṇavādvyādhivikīrṇaphenā-",
    "915:279": "jjarātaraṅgānmaraṇogravegāt|",
    "915:280": "uttārayiṣyatyayamuhyamāna-",
    "915:281": "mārta jagajjñānamahāplavena||70||",
    "915:282": "prajñāmbuvegāṃ sthiraśīlavaprāṃ",
    "915:283": "samādhiśītāṃ vratacakravākām|",
    "915:284": "asyottamāṃ dharmanadī pravṛtāṃ|",
    "915:285": "tṛṣṇārditaḥ pāsyati jīvalokaḥ||71||",
    "915:286": "duḥkhārditebhyo viṣayāvṛtebhyaḥ",
    "915:287": "saṃsārakāntārapathasthitebhyaḥ|",
    "915:288": "ākhyāsyati hyeṣa vimokṣamārga",
    "915:289": "mārgapranaṣṭebhya ivādhvagebhyaḥ||72||",
    "915:290": "vidahyamānāya janāya loke",
    "915:291": "rāgāgnināyaṃ viṣayendhanena|",
    "915:292": "pralhādamādhāsyati dharmavṛṣṭyā",
    "915:293": "vṛṣṭyā mahāmegha ivātapānte||73||",
    "915:294": "tṛṣṇārgalaṃ mohatamaḥkapāṭaṃ",
    "915:295": "dvāraṃ prajānāmapayānahetoḥ|",
    "915:296": "vipāṭayiṣyatyayamuttamena",
    "915:297": "saddharmatāḍena durāsadena||74||",
    "915:298": "svairmohapāśaiḥ pariveṣṭitasya",
    "915:299": "duḥkhābhibhūtasya nirāśrayasya|",
    "915:300": "lokasya saṃbudhya ca dharmarājaḥ",
    "915:301": "kariṣyate bandhanamokṣameṣaḥ||75||",
    "915:302": "tanmā kṛthāḥ śokamimaṃ prati tva-",
    "915:303": "masminsa śocyo'sti manuṣyaloke|",
    "915:304": "mohena vā kāmasukhairmadādvā",
    "915:305": "yo naiṣṭhikaṃ śroṣyati nāsya dharmam||76||",
    "915:306": "bhraṣṭasya tasmācca guṇādato me",
    "915:307": "dhyānāni labdhvāpyakṛtārthataiva|",
    "915:308": "dharmasya tasyāśravaṇādahaṃ hi",
    "915:309": "manye vipattiṃ tridive'pi vāsam||77||",
    "915:310": "iti śrutārthaḥ sasuhṛtsadāra-",
    "915:311": "styaktvā viṣādaṃ mumude narendraḥ|",
    "915:312": "evaṃvidho'yaṃ tanayo mameti",
    "915:313": "mene sa hi svāmapi sāravattām||78||",
    "915:314": "ārṣeṇa mārgeṇa tu yāsyatīti",
    "915:315": "cintāvidheyaṃ hṛdayaṃ cakāra|",
    "915:316": "na khalvasau na priyadharmapakṣaḥ|",
    "915:317": "saṃtānanāśāttu bhayaṃ dadarśa||79||",
    "915:318": "atha munirasito nivedya tattvaṃ",
    "915:319": "sutaniyataṃ sutaviklavāya rājñe|",
    "915:320": "sabahumatumudīkṣyamāṇarūpaḥ",
    "915:321": "pavanapathena yathāgataṃ jagāma||80||",
    "915:322": "kṛtamitiranujāsutaṃ ca dṛṣṭvā",
    "915:323": "munivacanaśravaṇe ca tanmatau ca|",
    "915:324": "bahuvidhamanukampayā sa sādhuḥ",
    "915:325": "priyasutavadviniyojayāṃcakāra||81||",
    "915:326": "narapatirapi putrajanmatuṣṭo",
    "915:327": "viṣayagatāni vimucya bandhanāni|",
    "915:328": "kulasadṛśamacīrakaradyathāva-",
    "915:329": "tpriyatanayastanayasya jātakarma||82||",
    "915:330": "daśasu pariṇateṣvahaḥsu caiva",
    "915:331": "prayatamanāḥ parayā mudā parītaḥ|",
    "915:332": "akuruta japahomamaṅgalādyāḥ",
    "915:333": "paramabhavāya sutasya devatejyāḥ||83||",
    "915:334": "api ca śatasahasrapūrṇasaṃkhyāḥ",
    "915:335": "sthirabalavattanayāḥ sahemaśṛṅgīḥ|",
    "915:336": "anupagatajarāḥ payasvinīrgāḥ",
    "915:337": "svayamadadātsutavṛddhaye dvijebhyaḥ||84||",
    "915:338": "bahuvidhaviṣayāstato yatātmā",
    "915:339": "svahṛdayatoṣakarīḥ kriyā vidhāya|",
    "915:340": "guṇavati niyate śive muhūrte",
    "915:341": "matimakaronmuditaḥ purapraveśe||85||",
    "915:342": "dviradaradamayīmatho mahārhā",
    "915:343": "sitasitapuṣpabhṛtāṃ maṇipradīpām|",
    "915:344": "abhajata śivikāṃ śivāya devī",
    "915:345": "tanayavatī praṇipatya devatābhyaḥ||86||",
    "915:346": "puramatha purataḥ praveśya patnīṃ",
    "915:347": "sthavirajanānugatāmapatyanāthām|",
    "915:348": "nṛpatirapi jagāma paurasaṃghai-",
    "915:349": "rdivamamarairmaghavānivārcyamānaḥ||87||",
    "915:350": "bhavanamatha vigāhya śākyarājo",
    "915:351": "bhava iva ṣaṇmukhajanmanā pratītaḥ|",
    "915:352": "idamidamiti harṣapūrṇavaktro",
    "915:353": "bahuvidhapuṣṭiyaśaskaraṃ vyadhatta||88||",
    "915:354": "iti narapatiputrajanmavṛddhyā",
    "915:355": "sajanapadaṃ kapilāvhayaṃ puraṃ tat|",
    "915:356": "dhanadapuramivāpsaro'vakīrṇa",
    "915:357": "muditamabhūnnalakūbaraprasūtau||89||",
    "915:358": "iti buddhacarite mahākāvye",
    "915:359": "bhagavatprasūtirnāma prathamaḥ sargaḥ||1||"
}