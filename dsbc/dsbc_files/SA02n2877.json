{
  "SA02n2877:3": "Baudha pāribhāṣikā ḥ śabdā ḥ",
  "SA02n2877:7": "akṣaram",
  "SA02n2877:11": "nirvāṇena tuccharūpeṇa rahitaṃ bimbaṃ saṃsāreṇa",
  "SA02n2877:12": "kṣarasukhalakṣaṇenātītamanāsravamahāsukhamakṣaram |",
  "SA02n2877:16": "( se ṭī , pṛ 70 )",
  "SA02n2877:20": "akṣobhyam",
  "SA02n2877:24": "kiñcid grāhyādiśūnyaṃ cet cittamakṣobhyamucyate|",
  "SA02n2877:29": "( a va saṃ , pṛ 29 )",
  "SA02n2877:33": "acintyam",
  "SA02n2877:37": "anābhogaṃ hi yajjñānaṃ taccācintyaṃ pracakṣate|",
  "SA02n2877:42": "saṃcintya yadacintyaṃ vai tadacintyaṃ",
  "SA02n2877:43": "bhavennahi ||",
  "SA02n2877:47": "( a va saṃ , 20 , 30 )",
  "SA02n2877:51": "acintyadhātuḥ",
  "SA02n2877:55": "katamo'sāvacintyadhātuḥ ?",
  "SA02n2877:56": "yo dhāturniścito na cittagmanīyo na",
  "SA02n2877:57": "cittaprameyo na cittacetanayā prativeditavyaḥ ,",
  "SA02n2877:58": "asāvucyate'cintyadhātuḥ | atha ca",
  "SA02n2877:59": "punarbhagavan cittamevācintyādhātuḥ |",
  "SA02n2877:60": "tat kasya hetoḥ ?",
  "SA02n2877:61": "nahyacitte citte cittaṃ saṃvidyate | niścito",
  "SA02n2877:62": "hi cittam , cittasya",
  "SA02n2877:63": "yathārthāvabodhāt |",
  "SA02n2877:64": "atha ca sarvākāro bhagavato'cintyadhātuḥ |",
  "SA02n2877:65": "anyatrāpyuktam -",
  "SA02n2877:69": "avikalpitasaṃkalpa apratiṣṭhitamānasa |",
  "SA02n2877:73": "asmṛtyamanasikāra nirālamba namo'stu te ||",
  "SA02n2877:77": "catuḥpradīpe -",
  "SA02n2877:81": "yaḥ pratyayairjāyati sa hyajāto",
  "SA02n2877:85": "na tasya utpāda svabhāvato'sti |",
  "SA02n2877:89": "yaḥ pratyayādhīna sa śūnya ukto",
  "SA02n2877:93": "yaḥ śūnyatāṃ jānati so'pramattaḥ ||",
  "SA02n2877:97": "( a va saṃ , pṛ 25 )",
  "SA02n2877:101": "anujñābhiṣekaḥ",
  "SA02n2877:105": "aparimitasattvadhātoryathāśayavaśena saṃvṛtiparamārthavibhāgena",
  "SA02n2877:106": "paramaguhyavajrayānadeśanārthamanujñābhiṣeko buddhatvaniṣpādakaḥ saptamaḥ | ( se ṭī pṛ 21 )",
  "SA02n2877:110": "apratiṣṭhitnirvāṇam",
  "SA02n2877:114": "virāgād rāgavigamāduṣṇīṣasthaṃ yat saukhyaṃ",
  "SA02n2877:115": "śukraṃ tatpratiṣṭhitam |",
  "SA02n2877:116": "yattu vajramaṇeścyutaṃ tannirvāṇam |",
  "SA02n2877:117": "ayaṃ tu sukharāja",
  "SA02n2877:118": "uṣṇīṣavajramaṇyantarālavyāpitvādapratiṣṭhitanirvāṇaḥ |",
  "SA02n2877:119": "ata eva mahārāgo'kṣaraśca",
  "SA02n2877:120": "prādhānyāt prabhustraidhātukeśvaraḥ | ( se ṭī , pṛ 55 )",
  "SA02n2877:124": "apratiṣṭhitanirvāṇākhyamahāsukhasaṃjñakaḥ",
  "SA02n2877:125": "śuddhakāyaḥ | ( se ṭī pṛ 55-56 )",
  "SA02n2877:129": "abhiṣekaḥ",
  "SA02n2877:133": "laukikalokottarasiddhisaudhasopānabhutānadharasaṃvṛtirūpān",
  "SA02n2877:134": "saptasekān vyākhyāya yogisaṃvṛtibhūtān laukikasiddhisādhanān paramārthanukūlāṃstrividhasekān",
  "SA02n2877:135": "( kumbha-guhya-prajñājñānākhyān )",
  "SA02n2877:136": "kumbhetyādinoddiśati | ( se ṭī , pṛ 21 )",
  "SA02n2877:140": "amanasikāraḥ",
  "SA02n2877:144": "amanasikāra ityatra bahavo vipratipannāḥ |",
  "SA02n2877:145": "tatra kaścidāha- apaśabdo'yamiti , samāse",
  "SA02n2877:146": "manaskāra iti bhavitumarhati |",
  "SA02n2877:147": "tatrocyate - “ tatpuruṣe kṛti bahulam “ ityatra bahulavacanāt ,",
  "SA02n2877:148": "“ saptamyā aluk “ ityuluksamāse kṛte'manasikāraḥ ,",
  "SA02n2877:149": "amanaskāraḥ ;",
  "SA02n2877:150": "tvacisāraḥ ,",
  "SA02n2877:151": "tvaksāraḥ ; yudhiṣṭhira etāni rūpāṇi sampadyante ,",
  "SA02n2877:152": "ato nāyamapaśabdaḥ |",
  "SA02n2877:153": "na ca prasajyapratiṣedhanaño",
  "SA02n2877:154": "viṣayatvādabhāvo vācyaḥ |",
  "SA02n2877:155": "asūryampaśyā rājadārā ityatra hi na sūryābhāvaḥ kṛtaḥ ,",
  "SA02n2877:156": "kintu rājadārāṇāṃ yat sūryadarśanaṃ prasajyaṃ",
  "SA02n2877:157": "tanniṣiddham |",
  "SA02n2877:158": "evamevāmanasikāre'pi naño manasikaraṇaṃ yad grāhyagrāhakādi",
  "SA02n2877:159": "prasaktaṃ tanniṣiddham , na manaḥ |",
  "SA02n2877:160": "ato na doṣaḥ |",
  "SA02n2877:161": "paryudāsapakṣe'pi na doṣaḥ ,",
  "SA02n2877:162": "abrāhmaṇamānayetyukte brāhmaṇasadṛśya kṣatriyāderānayanaṃ bhavati ,",
  "SA02n2877:163": "na tu vijātīyasya kaṭādeḥ atrāpi niḥsvabhāvavedanasya",
  "SA02n2877:164": "saṃsthitiḥ kṛtā |",
  "SA02n2877:165": "athavā akārapradhāno manasikāra ityatra",
  "SA02n2877:166": "śākapārthivādivanmadhyamapadalopī samāsaḥ |",
  "SA02n2877:167": "etena yāvān manasikāraḥ",
  "SA02n2877:168": "sarvamanutpādātmaka ityarthaḥ |",
  "SA02n2877:169": "akārasyānutpādakārakatvam “ akāro mukhaṃ sarvadharmāṇāmādyanutpannatvāt “ ityādinā hevajre uktam |",
  "SA02n2877:170": "nāmasaṃgītau ca -",
  "SA02n2877:174": "ākāraḥ sarvavarṇāgrayo mahārthaḥ paramākṣaraḥ |",
  "SA02n2877:178": "mahāprāṇo hyanutpādo vāgudāhāravarjitaḥ || iti|",
  "SA02n2877:183": "yadi vā - akāro'tra nairātmyābījam | tathā ca",
  "SA02n2877:184": "hevajre - “ ālerādi nerādi nirātmyā “ iti |",
  "SA02n2877:188": "etena sarvamanasikāro'nātmako'svabhāva ityuktaṃ",
  "SA02n2877:189": "bhavati | yadi vā -",
  "SA02n2877:193": "ādisvarasvabhāvā sā dhīti buddhaiḥ prakalpitā |",
  "SA02n2877:197": "saiva bhagavatī prajñā utpannakramayogataḥ ||",
  "SA02n2877:201": "yadi vā - a iti prabhāsvarapadam ,",
  "SA02n2877:202": "manasikāra iti svādhiṣṭhānapadam | aścāsau",
  "SA02n2877:203": "manasikārścetyamanasikāraḥ |",
  "SA02n2877:204": "etena amanasikārapadena acintyaprabhāsvarasvādhiṣṭhānapadaṃ",
  "SA02n2877:205": "śūnyatākaruṇābhinna-yuganaddhādvayavāhisaṃvedanamāpādutaṃ bhavatīti | ( a va saṃ , pṛ60-62 )",
  "SA02n2877:209": "amṛtakuṇḍalī",
  "SA02n2877:213": "vidhnāntako'mṛtakuṇḍalīti tasya dṛṣṭiramṛtasthānagatā",
  "SA02n2877:214": "lalāṭagatā |",
  "SA02n2877:218": "( se tī pṛ 36-37 )",
  "SA02n2877:222": "upasādhanakāle tu bimbaṃ cāmṛtakuṇḍalīm |",
  "SA02n2877:226": "( se tī , pṛ 39 )",
  "SA02n2877:230": "tato'mṛtakuṇḍalībimbasaṃjñayā sandhyābhāṣāntareṇa",
  "SA02n2877:231": "vāyurityuktam |",
  "SA02n2877:232": "sa ca pañcaprakāraḥ |",
  "SA02n2877:233": "tathā ca samājottare bhagavānāha -",
  "SA02n2877:237": "pañcaratnamayaṃ śvāsaṃ pañcabuddhairadhiṣṭhitam|",
  "SA02n2877:242": "niścārya piṇḍarūpeṇa nāsikāgre vibhāvayet ||",
  "SA02n2877:243": "iti |",
  "SA02n2877:247": "iha pañcaratnaśabdena rasanāpañcamaṇdaladharmiṇaḥ",
  "SA02n2877:248": "pṛthivyādipañcadhātavastanmayaṃ śvāsaṃ pañcaratnamayamiti savyanāsāpuṭe | tathā",
  "SA02n2877:249": "pañcabuddhā lalanāpañcamaṇḍaladharmiṇo vijñānādipañcaskandhāḥ ,",
  "SA02n2877:250": "tairadhiṣṭhitaṃ śvāsaṃ vāmanāsāpuṭa iti |",
  "SA02n2877:251": "niścārya piṇḍarūpeṇeti |",
  "SA02n2877:252": "iha piṇḍaṃ savyāpasavyamaṇḍalānātmakatvaṃ",
  "SA02n2877:253": "madhyamāyāmavadhūtyāṃ prāṇavāyoriti |",
  "SA02n2877:254": "taṃ ca prāṇavāyuṃ niścārya piṇḍarūpeṇa",
  "SA02n2877:255": "nāsikāgre vibhāvayet karṇikātaḥ karṇikāmadhye",
  "SA02n2877:256": "na savyāpasavyakamaladala iti |",
  "SA02n2877:257": "evaṃ bindusthāne piṇḍarūpeṇa nirodhitaḥ prāṇaḥ",
  "SA02n2877:258": " | tenaiva tasya dhāraṇocyate |",
  "SA02n2877:262": "evamaṅgadvayenopasādhanamamṛtakuṇḍalībimbeneti",
  "SA02n2877:263": " | ( se tī , pṛ 41-42 )",
  "SA02n2877:267": "avasthātrayam",
  "SA02n2877:271": "tatrāvasthāstrayaḥ |",
  "SA02n2877:272": "hetvavasthā nāma",
  "SA02n2877:273": "bodhicittāt prabhṛti bodhimaṇḍanivedanaṃ yāvat |",
  "SA02n2877:274": "phalāvasthā nāma samyaksaṃbodhijñānotpattau",
  "SA02n2877:275": "sarvakleśaguṇaprahāṇiprāptyavasthā |",
  "SA02n2877:276": "sattvārthakriyāvasthā nāma",
  "SA02n2877:277": "prathamadharmacakrapravartanāt prabhṛti āśāsanāntardhānaṃ yāvat |",
  "SA02n2877:281": "tatra hetvavasthā trividhā - āśāyāvasthā ,",
  "SA02n2877:282": "prayogāvasthā ,",
  "SA02n2877:283": "vasitāvasthā ceti |",
  "SA02n2877:284": "tatra āśayāvasthā",
  "SA02n2877:285": "sattvānirmokṣapraṇidhānam |",
  "SA02n2877:286": "taddhetavaścatvāraḥ",
  "SA02n2877:287": " | tadyathā -",
  "SA02n2877:291": "gotra-sanmitra-kāruṇya-duḥkhābhīrutvahetavaḥ |",
  "SA02n2877:295": "caturbhiḥ pratyayairebhirbodhicittaṃ prajāyate",
  "SA02n2877:296": " ||iti |",
  "SA02n2877:300": "tatra prayogāvasthā dvividhā- adhimukticittasya",
  "SA02n2877:301": "pāramitāḥ sapta ,",
  "SA02n2877:302": "adhimukticaritasya",
  "SA02n2877:303": "pāramitā daśa |",
  "SA02n2877:304": "bhūmiprāptasya catasṛbhiḥ sampadbhiḥ sampannaṃ cittamiti",
  "SA02n2877:305": "tadarthaṃ dānaṃ śīlaṃ kṣāntirvīyaṃ dhyānaṃ prajñā upāya ityetāḥ sapta pāramitāḥ",
  "SA02n2877:306": " | adhimukticaryācaritasya daśa pāramitāḥ -",
  "SA02n2877:310": "dānaṃ śīlaṃ kṣamā vīryaṃ dhyānaṃ prajñā upāyatā|",
  "SA02n2877:315": "praṇidhānaṃ balaṃ jñānaṃ matāḥ pāramitā daśa ||iti |",
  "SA02n2877:319": "tatra vasitāvasthāḥ",
  "SA02n2877:320": "pañca-kleśa-upapatti-karma-upāya-sattvaparipākāvasthākhyāḥ | tatra",
  "SA02n2877:321": "hetvavasthāsthitena sarvamādikarma kartavyam |",
  "SA02n2877:322": "phalāvasthā-sattvārthakriyāvasthāsthitasya ca śākyamuneriva anābhogena ādikarma",
  "SA02n2877:323": "pravartata iti | ( a va saṃ , pṛ 11-12 )",
  "SA02n2877:327": "aśubhā bhāvanā",
  "SA02n2877:331": "śarīrasya viṇmūtraśukraśoṇitaśleṣmāntāntrasiṃhānakacikkaṇaklamathaplīhāyakṛtprabhṛtisamudāyarūpatā",
  "SA02n2877:332": " | taduktam -",
  "SA02n2877:336": "imaṃ carmapuṭaṃ tāvat svabuddho ca pṛthak kuru|",
  "SA02n2877:341": "asthipañjarato māṃsaṃ prajñāśastreṇa mocaya ||",
  "SA02n2877:345": "asthīnyapi pṛthak kṛtvā paśya majjānamantataḥ |",
  "SA02n2877:349": "kimatra sāramastīti svayameva vicāraya ||iti |",
  "SA02n2877:353": "( a va saṃ , pṛ 15 )",
  "SA02n2877:357": "ādikarma",
  "SA02n2877:361": "ādikarma yathoddiṣṭaṃ kartavyaṃ sarvayogibhiḥ |",
  "SA02n2877:365": "śūnyatākaruṇābhinnaṃ yadbodhau jñānamiṣyate ||",
  "SA02n2877:369": "pañcapāramitāḥ proktā ādikarmeti saṃjñayā |",
  "SA02n2877:373": "prajñāpāramitā cāsāṃ svabhāvo nābhiriṣyate ||",
  "SA02n2877:377": "dānaṃ śīlaṃ kṣamāṃ bīryaṃ dhyānaṃ prajñāṃ ca",
  "SA02n2877:378": "sādaram |",
  "SA02n2877:382": "satataṃ sevayan dhīmān sukhī svastho'pi jāyate ||",
  "SA02n2877:387": "saṃbhoganirmite heturdānaśīlakṣamātrayam |",
  "SA02n2877:391": "dhyānaprajñeti dharmasya vīryaṃ tūbhayayormatam ||",
  "SA02n2877:396": "( a va saṃ , pṛ 2 )",
  "SA02n2877:400": "ānandāḥ",
  "SA02n2877:404": "ānandāścatvāraḥ - ānandaḥ ,",
  "SA02n2877:405": "paramānandaḥ ,",
  "SA02n2877:406": "sahajānandaḥ ,",
  "SA02n2877:407": "viramānandaḥ |",
  "SA02n2877:408": "anyathā - “ paramaviramayormadhye lakṣyaṃ vīkṣya dṛḍhikuru “ iti yaduktam ,",
  "SA02n2877:409": "tatsaṃgataṃ na bhavāti |",
  "SA02n2877:413": "( a va saṃ , pṛ 23 )",
  "SA02n2877:417": "āśvāsaḥ",
  "SA02n2877:421": "sarvāvaraṇavinirmuktaḥ",
  "SA02n2877:422": "sarvabuddhabodhisattvasamayastvamitaḥ prabhṛti ( iti )",
  "SA02n2877:423": "bodhanārthamāśvāsaḥ |",
  "SA02n2877:427": "( a va saṃ , pṛ 38 )",
  "SA02n2877:434": "upāsakaḥ",
  "SA02n2877:438": "u udyukto buddhapūjāyāṃ upaśāntopaśāyakaḥ |",
  "SA02n2877:442": "upakārāya sattvānāmupāyenānvito bhavet ||",
  "SA02n2877:445": "pā",
  "SA02n2877:446": "pāpānāvarjayennityaṃ pāpiṣṭhaiḥ saha saṅgatim |",
  "SA02n2877:450": "pāpānnivārayan jantoḥ pāpaṃ sarvatra deśayet ||",
  "SA02n2877:454": "sa samāropavinirmuktaḥ samādhau",
  "SA02n2877:455": "susamāhitaḥ |",
  "SA02n2877:459": "sarvadā",
  "SA02n2877:460": "paramānandī sambodhiṃ sādhayed budhaḥ ||",
  "SA02n2877:464": "kaḥ karoti sarvadā yatnaṃ karuṇāṃ paripālayet |",
  "SA02n2877:468": "kaṣṭenāpi",
  "SA02n2877:469": "na cāniṣṭaṃ karotyupakṛtiṃ parām ||",
  "SA02n2877:473": "( a va saṃ , pṛ 10 )",
  "SA02n2877:477": "ṛddhiḥ",
  "SA02n2877:481": "ṛddhirākāśagamanādikam | ( se tī , pṛ 47 )",
  "SA02n2877:484": "karma",
  "SA02n2877:488": "karma kāyavākcittacintā ( a va saṃ , pṛ 32 )",
  "SA02n2877:492": "īryā ca kāyikaṃ karmaṃ vācikaṃ dharmadeśanā |",
  "SA02n2877:496": "samādānaṃ manaḥkarma nirvikalpasya dhīmataḥ ||",
  "SA02n2877:500": "( a va saṃ , pṛ 54 )",
  "SA02n2877:504": "karmamudrā",
  "SA02n2877:508": "karma kāyavākcittacintā |",
  "SA02n2877:509": "tatpradhānā mudrā",
  "SA02n2877:510": "kalpanāsvarūpā |",
  "SA02n2877:511": "tasyāṃ karmamudrāyām -",
  "SA02n2877:515": "ānandāstatra jāyante kṣaṇabhedena bheditāḥ |",
  "SA02n2877:519": "kṣaṇajñānāt sukhajñānamevaṃkāre pratiṣṭhitam ||",
  "SA02n2877:527": "tasmāt karmamudrāṃ prāpya niṣpandaphalamutpadyate",
  "SA02n2877:528": " | sadṛśaspando nispandaḥ |",
  "SA02n2877:532": "karmamudrayā kṛtimāyā kathamakṛtribhūtaṃ",
  "SA02n2877:533": "sahajākhyaṃ jñānamutpadyate |",
  "SA02n2877:534": "karmāṅganāyā ānandasandoharatnākaraṃ saroruham |",
  "SA02n2877:535": "tat svacchamāsthānaṃ bolakakkolarasasaṃyogena avadhūtyā saṃvṛtibodhicittamaṇyantargataṃ",
  "SA02n2877:536": "yadā bhavet ,",
  "SA02n2877:537": "tadā kṣaṇikanāmāparaṃ",
  "SA02n2877:538": "sahajākhyaṃ jñānamutpadyate |",
  "SA02n2877:539": "na tat sahajaṃ nispandam |",
  "SA02n2877:540": "tatsvarūpeṇa",
  "SA02n2877:541": "prajñājñānānandatrayaṃ kṣaṇacatuṣṭayānvitaṃ seke |",
  "SA02n2877:542": "haṭhayoge ca karmamudrāyā niṣpandaphalamuktam|",
  "SA02n2877:547": "( a va saṃ , pṛ 32-33 )",
  "SA02n2877:551": "karmamudrayā kṣarasukhāvasthā | ( se ṭī , pṛ 62 )",
  "SA02n2877:558": "kalaśābhiṣekaḥ",
  "SA02n2877:562": "udaka-mukuṭa-vajra-ghaṇṭā- nāma-ācārya-lakṣaṇāḥ",
  "SA02n2877:563": "ṣaṭ kalaśābhiṣekāḥ |",
  "SA02n2877:564": "eṣāṃ sarveṣāṃ kalaśavyāpārāt kalaśābhiṣekasaṃjñā |",
  "SA02n2877:565": "avaivartikābhiṣekāścaite ṣaṭtathāgatasvabhāvatvāt |",
  "SA02n2877:566": "tathāhi udakābhiṣeka",
  "SA02n2877:567": "ādarśajñānātmako'kṣobhyasvabhāvaḥ |",
  "SA02n2877:568": "mukuṭābhiṣekaḥ samatājñānātmako ratnasaṃbhavasvabhāvaḥ",
  "SA02n2877:569": " | vajrābhiṣekaḥ pratyavekṣaṇājñānātmako'mitābhasvabhāvaḥ |",
  "SA02n2877:570": "adhipatyabhiṣekaḥ kṛtyānuṣṭhānarūpo'moghasiddhisvabhāvaḥ",
  "SA02n2877:571": " | nāmābhiṣeko'vidyānirodhād vidyānugataviśuddhadharmadhātujñānātmako",
  "SA02n2877:572": "vairocanasvarūpaḥ ācāryābhiṣekastu ajrajñānasvabhāvaḥ |",
  "SA02n2877:573": "atra ca pañcābhiṣekāḥ ,",
  "SA02n2877:574": "pañcasu locanādividyāyā vyāpārāt | atra ca",
  "SA02n2877:575": "avidyāmalakṣālanāyākṣobhyarūpeṇa vajrācāryeṇa vairocanarūpāvalambini śiṣye",
  "SA02n2877:576": "salilābhiṣekā deyaḥ |",
  "SA02n2877:577": "evaṃ sarvatrāhaṅkāra āgāmibuddhabhāvo'cittoṣṇīṣabhūto",
  "SA02n2877:578": "mukuṭāabhiṣekaḥ |",
  "SA02n2877:579": "vajrābhiṣekasya vidhānamutpaśyamānābhedyajñānabījadhānamiva",
  "SA02n2877:580": "vidhātum | evaṃ vajraghaṇṭā'pi pūrvābhisandhānena dvādaśāṅgulaparimāṇā'ghomukhāmbhojavajrasamāpattiniḥsvabhāvatvena",
  "SA02n2877:581": "sarvadharmasvabhāvaṃ pratipādayitumabhedyajñānanigadatāṃ dharmodayasya bodhayituṃ",
  "SA02n2877:582": "mūrdhādhobhāge ca vajrāvalīyugalamālīnī |",
  "SA02n2877:586": "athābhiṣekamanayā svanantyā vajraghaṇṭayā",
  "SA02n2877:587": "kurvīta | anuttarāśeṣadharmabodhād vikārakamiha prādhānyakhyāpanāya",
  "SA02n2877:588": "hetukatāpratipādanāya ca kāraṇabhūtamapi vajrabhaṇṭābhiṣekamullaṅdhya prathamaṃ",
  "SA02n2877:589": "vajrābhiṣekadānam |",
  "SA02n2877:590": "sarvadharmā nāmatā iti pratipādanārthaṃ bhaviṣyanmunīndrapadocitanāmanidānāvadānārthaṃ",
  "SA02n2877:591": "ca pūrvanāmavyapanayena svadevatākulagotrānusāreṇa nāmābhiṣekaḥ |",
  "SA02n2877:592": "ācāryābhiṣekaśca",
  "SA02n2877:593": "vajrasamaya-ghaṇṭāsamaya-mudrāsamaya-bhavyatānujñā-vratavyākaraṇa-āśvāslakṣaṇaḥ",
  "SA02n2877:594": " | ( a va saṃ , pṛ 36-38 )",
  "SA02n2877:601": "kāyacatuṣṭayam",
  "SA02n2877:605": "asaṃskṛtatathāgatātmakatvād dharmakāyaḥ ,",
  "SA02n2877:606": "pratibhāsamātratvāt saṃbhogakāyaḥ ,",
  "SA02n2877:607": "kalpitanirmāṇakāyatvānnirmāṇakāyaḥ ,",
  "SA02n2877:608": "kāyatritayaikarasatvāt svābhāvikakāyaḥ |",
  "SA02n2877:609": "taduktam -",
  "SA02n2877:613": "asaṃskṛtamanodharmaścopasambhogalakṣaṇaḥ |",
  "SA02n2877:617": "tadeva nirmitaṃ citraṃ bījaḥ sarvasvabhāvataḥ ||",
  "SA02n2877:622": "( a va saṃ , pṛ 40 )",
  "SA02n2877:629": "ata eva dharmāṇāmāśrayaḥ kāyo dharmakāya",
  "SA02n2877:630": "ityācakṣate |",
  "SA02n2877:631": "tasmād yuganaddhakāya eva",
  "SA02n2877:632": "dharmakāyaḥ sāmbhogikasvābhāvikābhyāṃ pṛthagbhūto yogipratyātmavedyaḥ | ( se ṭī , pṛ 57 )",
  "SA02n2877:636": "kṣaṇāḥ",
  "SA02n2877:640": "catvāraḥ kṣaṇāḥ - vicitra-vipāka-vilakṣaṇa-vimardāḥ",
  "SA02n2877:641": " | madhye vilakṣaṇaṃ dattvā seke boddhavyam |",
  "SA02n2877:642": "haṭhayoge punaḥ sahajavilakṣaṇayorante",
  "SA02n2877:643": "sthitirboddhavyā |",
  "SA02n2877:644": "sekahaṭhayoge cedaṃ nidiṣṭaṃ bhagavatā |",
  "SA02n2877:648": "( a va saṃ , pṛ 32 )",
  "SA02n2877:652": "kṣāntiḥ",
  "SA02n2877:656": "kṣāntiśca krūrataptakarapatrādighātasahanatayā",
  "SA02n2877:657": " | ( a va saṃ , pṛ 3 )",
  "SA02n2877:664": "guhābhiṣekaḥ",
  "SA02n2877:668": "prajñāśraddhākṣetrīkaraṇārthaṃ samayarakṣaṇārthaṃ",
  "SA02n2877:669": "ca samānakālobhayasampāditabodhicittapradānaṃ guhyābhiṣekaḥ |",
  "SA02n2877:670": "prajñopāyaguhyābhyāṃ dīpayata iti vyutpattiḥ | ( a va saṃ , pṛ 38 )",
  "SA02n2877:674": "ghaṇṭāsamayaḥ",
  "SA02n2877:678": "caturaśītidharmaskandhasahasraparastvamiti",
  "SA02n2877:679": "pratipādanāya ghaṇṭāsamayaḥ |",
  "SA02n2877:683": "( a va saṃ , pṛ 38 )",
  "SA02n2877:687": "caturthābhiṣekaḥ",
  "SA02n2877:691": "prajñājñānalakṣitasaptāṅgayuktasādhyaṃ",
  "SA02n2877:692": "caturthārthamityeke |",
  "SA02n2877:693": "prajñājñānameva abhyasyamānaśaradamalagaganasaṃkāśaṃ",
  "SA02n2877:694": "caturthārthamityapare |",
  "SA02n2877:695": "prajñājñānameva prakṛtirūpaṃ prakṛtisamutpādātmakaṃ",
  "SA02n2877:696": "yuganaddhādvayavāhivuśuddhasvabhāvaṃ caturthārthamityapare |",
  "SA02n2877:697": "pakṣāntarāṇi ca",
  "SA02n2877:698": "vistarabhayānnocyante |",
  "SA02n2877:702": "( a va saṃ , pṛ 39 )",
  "SA02n2877:706": "caturbrahmāvihāraḥ",
  "SA02n2877:710": "sarvasattveṣvekaputrapremākārāṃ maitrīm ,",
  "SA02n2877:711": "duḥkhāduḥkhahetoḥ saṃsārasāgarāt samuddharaṇāvāñchāsvabhāvāṃ",
  "SA02n2877:712": "karuṇām , ratnatrayaśaraṇagamanāt",
  "SA02n2877:713": "samullasanmanaḥprabhavāṃ muditām ,",
  "SA02n2877:714": "adhyāsaṅgaparilakṣaṇāmupekṣāṃ va vibhāvya | ( a va saṃ , pṛ 4-5 )",
  "SA02n2877:717": "jagat",
  "SA02n2877:721": "śūnyatākaruṇābhinnaṃ jagat | ( a va saṃ , pṛ 26 )",
  "SA02n2877:725": "hetuphalātmakaṃ bhavanirvāṇaikarasatāmātraṃ",
  "SA02n2877:726": "jagat | ( a va saṃ , pṛ 42 )",
  "SA02n2877:730": "jñānamudrā",
  "SA02n2877:734": "jñānamudrā svacittaparikalpitā",
  "SA02n2877:735": "viśvamātādidevīsvābhāvā ,",
  "SA02n2877:736": "pūrvānuhukteti yāvat |",
  "SA02n2877:740": "( se ṭī , pṛ 56 )",
  "SA02n2877:744": "jñānamudrayā spandasukhāvasthā | spandeti",
  "SA02n2877:745": "srāvasādharmyakṣarasyāpi saṃgrahaḥ |",
  "SA02n2877:746": "ete ( kṣaraspandākhye )",
  "SA02n2877:750": "sukhāvasthe sākṣātkṛte kāmarūpadhātvaiśvaryalakṣaṇalaukikasiddhisādhane",
  "SA02n2877:751": " | ( se ṭī , pṛ 62 )",
  "SA02n2877:755": "triśaraṇagāthā",
  "SA02n2877:759": "namo buddhāyaṃ gurave namo dharmāya tāyine |",
  "SA02n2877:763": "nama saṃghāya mahate tribhyo'pi satataṃ namaḥ ||",
  "SA02n2877:768": "ratnatrayaṃ me śaraṇaṃ sarvaṃ pratidiśāmyagham|",
  "SA02n2877:773": "anumode jagatpuṇyaṃ buddhabodhau daghe manaḥ ||",
  "SA02n2877:777": "ābodheḥ śaraṇaṃ yāmi buddhaṃ dharmaṃ gaṇottamam|",
  "SA02n2877:782": "bodhau cittaṃ karomyeṣa svaparārthaprasiddhaye ||",
  "SA02n2877:787": "utpādayāmi varabodhicittaṃ nimantrayāmyahaṃ",
  "SA02n2877:788": "sarvasattvān |",
  "SA02n2877:792": "iṣṭāṃ cariṣye varabodhicārikāṃ buddho bhaveyaṃ",
  "SA02n2877:793": "jagato hitāya ||",
  "SA02n2877:797": "deśanā sarvapāpānāṃ puṇyānāṃ cānumodanā |",
  "SA02n2877:801": "kṛtopavāsaṃ cariṣyāmi āryāṣṭāṅgikapoṣadham ||",
  "SA02n2877:805": "( a va saṃ , pṛ 5-6 )",
  "SA02n2877:809": "dharmamudrā",
  "SA02n2877:813": "dharmamudrā dharmadhātusvarūpā niṣprapañcā",
  "SA02n2877:814": "nirvikalpā akṛtrimā utpādarahitā karuṇāsvabhāvā paramānandaikasundaropāyabhūtā |",
  "SA02n2877:815": "pravāhanityatvena sahajasvabhāvāyāḥ prajñāyāḥ sahajodayatvena bhinnā yā sā",
  "SA02n2877:816": "dharmamudretyabhidhīyate |",
  "SA02n2877:817": "anyallakṣaṇaṃ tasyāḥ saṃkulājñānāndhakārataraṇikiraṇasadṛśaṃ",
  "SA02n2877:818": "gurūpadeśatastṛṇatuṣamātrābhrāntiśalyavarjitaṃ boddhavyam |",
  "SA02n2877:819": "sakalakṣitijalapavanahutāśanairmahāśabalitaṃ",
  "SA02n2877:820": "trailokyaikasvabhāvaṃ nistaraṅgaśūnyatakaruṇābhinnaṃ ca boddhavyam |",
  "SA02n2877:821": "lalanā , rasanā ,",
  "SA02n2877:822": "tayormadhyadeśe nivāsinī avadhūtī |",
  "SA02n2877:823": "saivādhigatasakalapadārthasahajasvabhāvaikacittavṛtteḥ sadgurūpadeśato",
  "SA02n2877:824": "dharmamudrā ,",
  "SA02n2877:825": "mahāmudrāyā abhedena",
  "SA02n2877:826": "hetubhūtā | ( a va saṃ , pṛ 33-34 )",
  "SA02n2877:830": "dharmodayaḥ",
  "SA02n2877:834": "tadyathā bhagavān buddhaḥ saṃbuddho'kārasaṃbhavaḥ ||",
  "SA02n2877:839": "akāraḥ sarvavarṇāgryo mahārthaḥ paramākṣaraḥ |",
  "SA02n2877:843": "mahāprāṇo hyanutpādo vāgvyāhāravivarjitaḥ ||",
  "SA02n2877:847": "sarvaiśvaryādidharmāṇāṃ buddhānāmudayo yataḥ |",
  "SA02n2877:851": "sa dharmodaya ākhyātaḥ puṇyajñānamayaḥ paraḥ ||",
  "SA02n2877:855": "( se ṭī , pṛ 69-70 )",
  "SA02n2877:859": "dhyānam",
  "SA02n2877:863": "dhyānaṃ ca sarvasvabhāvānugatānābhogasvarasavāhitayā",
  "SA02n2877:864": " | ( a va saṃ , pṛ 55 )",
  "SA02n2877:868": "naṣṭacandraḥ",
  "SA02n2877:872": "sūryasya ṣoḍaśī kalā uṣṇīṣakamale gatā naṣṭacandra",
  "SA02n2877:873": "ityākhyātaḥ | ( se ṭī , pṛ 55 )",
  "SA02n2877:877": "nāmābhiṣekaḥ",
  "SA02n2877:881": "brāhmaṇādivarṇanāmekakalkatvābhiprāyeṇāmukavajra",
  "SA02n2877:882": "iti nāmakaraṇānmaitryādicaturbrahmavihāraparipūrtyā sarvakālaṃ rāgadveṣādiviśuddhinivāraṇatveneti",
  "SA02n2877:883": "nāmābhiṣekaḥ ṣaṣṭhaḥ | ( se ṭī , pṛ 21 )",
  "SA02n2877:887": "nimittam",
  "SA02n2877:891": "aparaṃ",
  "SA02n2877:892": "jvālādibinduparyantaṃ ṣaḍanyannimittaṃ māyājāle samādhipaṭale proktaṃ bhagavatā",
  "SA02n2877:893": " | tadyathā -",
  "SA02n2877:897": "gaganodbhavaḥ svayambhūḥ prajñājñānānalo mahān|",
  "SA02n2877:902": "vairocano mahādīptirjñānajyotirvirocanaḥ ||",
  "SA02n2877:906": "jagatpradīpo jñānolko mahātejāḥ prabhāsvaraḥ |",
  "SA02n2877:910": "vidyārājogramantreśo mantrarājo mahārthakṛt ||",
  "SA02n2877:914": "iti gāthādvayena māyājāle'paranimittaṃ",
  "SA02n2877:915": "bhagavatoktaṃ sandhyābhāṣāntareṇa |",
  "SA02n2877:916": "pūrvoktānnirabhragaganād bhavati pratibhāso",
  "SA02n2877:917": "yaḥ sa gaganodbhavaḥ svayambhūḥ ,",
  "SA02n2877:918": "sarvavikalparahitacittatvāditi |",
  "SA02n2877:919": "atra prajñājñānānala iti",
  "SA02n2877:920": "jvālāpratibhāsaḥ |",
  "SA02n2877:921": "vairocano mahādīptiriti candrapratibhāsaḥ | sa eva",
  "SA02n2877:922": "jñānajyotirvirocana iti jagatpradīpa iti sūryapratibhāsaḥ |",
  "SA02n2877:923": "jñānolkā iti",
  "SA02n2877:924": "rāhupratibhāsaḥ |",
  "SA02n2877:925": "mahātejāḥ prabhāsvara iti vidyutpratibhāsaḥ |",
  "SA02n2877:926": "vidyārājogramantreśa iti bindupratibhāso nīlavarṇacandramaṇḍalākāra iti |",
  "SA02n2877:927": "mantrarājo mahārthakṛditi sarvākāratraidhātukabhāvapratibhāso",
  "SA02n2877:928": "māyāsvapnapratibhāsena tulyo dṛśyate yoginā cakṣurādīndriyakaraṇena | ( se ṭī , pṛ 40-41 )",
  "SA02n2877:932": "niṣpandaḥ",
  "SA02n2877:936": "karmamudrāṃ prāpya niṣpandaphalamutpadyate |",
  "SA02n2877:937": "sadṛśaspando niṣpandaḥ |",
  "SA02n2877:938": "na tat sahajaṃ niṣpandam ,",
  "SA02n2877:939": "kintu sahajasadṛśam |",
  "SA02n2877:940": "tatsvarūpeṇa",
  "SA02n2877:941": "prajñājñānānandatrayaṃ kṣaṇacatuṣṭayānvitaṃ seke |",
  "SA02n2877:942": "haṭhayoge ca karmamudrāyā niṣpandaphalamuktam",
  "SA02n2877:943": " | ( a va saṃ , pṛ 32-33 )",
  "SA02n2877:947": "pañca jñānāni",
  "SA02n2877:951": "ādarśa-samatā-pratyavekṣaṇā-kṛtyānuṣṭhāna-suviśuddhadharmadhātulakṣaṇāni",
  "SA02n2877:952": " | ( a va saṃ , pṛ 37 )",
  "SA02n2877:956": "pañca tathāgatāḥ",
  "SA02n2877:960": "maṇḍalādhiṣṭhitabhūbhāge caturasrādicaturṇāmanyatamamabhimatamaṇḍalakaṃ",
  "SA02n2877:961": "kṛtvā tanmadhye viśvarṇāṣṭadalakamalavaraṭake sūryamaṇḍalopari nīlaṃhūṃkārapariniṣpannaṃ",
  "SA02n2877:962": "bhūsparśamudrādharaṃ kṛṣṇavarṇamakṣobhyam |",
  "SA02n2877:963": "tadanu pūrvadale śuklaomkāraniṣpannaṃ",
  "SA02n2877:964": "śuklavarṇaṃ bodhyaṅgīmudrādharaṃ vairocanam ,",
  "SA02n2877:965": "tato dakṣiṇadale pītatrāṃkārajaṃ pītavarṇa",
  "SA02n2877:966": "varadamudrādharaṃ ratnasambhavam ,",
  "SA02n2877:967": "tataḥ paścimadale raktahrīṃkārasambhūtaṃ",
  "SA02n2877:968": "raktavarṇa samādhimudrādharamamitābham ,",
  "SA02n2877:969": "tata uttaradale śyāmakhaṃkārajaṃ śyāmavarṇamabhayamudrāgharamamoghasiddhi",
  "SA02n2877:970": "ca bhāvayitvā |",
  "SA02n2877:971": "ete pañca tathāgatā kāṣāyavastraprāvṛtāḥ soṣṇīṣāḥ śirastuṇḍamuṇḍitāḥ",
  "SA02n2877:972": "sūryamaṇḍalasthāḥ |",
  "SA02n2877:973": "vairocanaḥ paraṃ śaśimaṇḍalī |",
  "SA02n2877:974": "tataścatvāro'kṣobhyābhimukhāḥ ,",
  "SA02n2877:975": "akṣobhyastu sādhakābhimukhaḥ | ( a va saṃ , pṛ 5 )",
  "SA02n2877:979": "pāramitā ( daśa )",
  "SA02n2877:983": "dānaṃ śīlaṃ kṣamā vīrya dhyānaṃ prajñā upāyatā|",
  "SA02n2877:988": "prṇidhānaṃ balaṃ jñānaṃ matāḥ pāramitā daśa ||",
  "SA02n2877:992": "( a va saṃ , pṛ 12 )",
  "SA02n2877:996": "pūrṇaḥ",
  "SA02n2877:1000": "kleśajñeyasaāpattyāvaraṇavāsanāyā haraṇamapagama",
  "SA02n2877:1001": "eva purṇaśabdena vyapadiśyate |",
  "SA02n2877:1002": "na jñānacchedo na ca tasya puraṇat |",
  "SA02n2877:1003": "tadkuktamāgame -",
  "SA02n2877:1007": "nityoditaṃ tu buddhānāṃ nāvidyāduṣṭacetasām |",
  "SA02n2877:1011": "( se ṭī , pṛ 62 )",
  "SA02n2877:1015": "sarahapādaiśca -",
  "SA02n2877:1019": "jayati sukharāja ekaḥ kāraṇarahitaḥ sadodito",
  "SA02n2877:1020": "jagatām |",
  "SA02n2877:1024": "yasya ca nigadanasamaye vacanadaridro babhūva",
  "SA02n2877:1025": "sarvajñaḥ ||",
  "SA02n2877:1029": "( se ṭī , pṛ 63 )",
  "SA02n2877:1033": "bodhicittasya mahāsukhasvabhāvo yaḥ sa pūrṇā",
  "SA02n2877:1034": "bhaṇyate | iyameva yogibhiḥ sthirīkaraṇīyā |",
  "SA02n2877:1035": "pūrṇāyāmasthirīkṛto hyasau",
  "SA02n2877:1036": "sukhenduḥ punaḥ punarutpadyate naśyati ca | ( se ṭī , pṛ 64 )",
  "SA02n2877:1040": "poṣadhadānam",
  "SA02n2877:1044": "prathamaṃ tu poṣadhadānam |",
  "SA02n2877:1045": "samanvāhara",
  "SA02n2877:1046": "bhadantācārya ! ahamitthaṃnāmā amukanāmā",
  "SA02n2877:1047": "upāsako buddhaṃ dharmaṃ saṃghaṃ śaraṇaṃ gacchāmi yāvadābodhimaṇḍataḥ | evaṃ",
  "SA02n2877:1048": "svirapi trirapi |",
  "SA02n2877:1049": "evaṃ triśaraṇagataṃ māṃ vadanto dhārayantviti |",
  "SA02n2877:1050": "samanvāhara",
  "SA02n2877:1051": "ācārya ! ahamamukanāmopāsaka imāṃ",
  "SA02n2877:1052": "velāmupādāya yāvat śvaḥ sūryodayamihāntare sarvaprāṇivadhāt ,",
  "SA02n2877:1053": "parasvaharaṇāt ,",
  "SA02n2877:1054": "abrahmacaryāt ,",
  "SA02n2877:1055": "vāgbhedādanṛtātmakadoṣajananāt ,",
  "SA02n2877:1056": "pānāt ,",
  "SA02n2877:1057": "vikālāśanāt ,",
  "SA02n2877:1058": "mālāvarṇakanṛtyagītalabhitāt ,",
  "SA02n2877:1059": "śyanāśanāducchritādadyāhaṃ virataḥ karomyahaṃ",
  "SA02n2877:1060": "tāvat | tadguṇairaṣṭabhiḥ poṣadhagāthā | ( a va saṃ , pṛ 3-4 )",
  "SA02n2877:1064": "deśanā sarvapāpānāṃ puṇyānāṃ cānumodanā |",
  "SA02n2877:1068": "kṛtopavāsaṃ cariṣyāmi āryāṣṭāṅgikapoṣadham ||",
  "SA02n2877:1072": "( a va saṃ , pṛ 6 )",
  "SA02n2877:1076": "prajñā",
  "SA02n2877:1080": "grāhyagrāhakarahitā svabhāvaśūnyatādhīḥ prajñā",
  "SA02n2877:1081": " | ( se ṭī , pṛ 47 )",
  "SA02n2877:1085": "prajñā ca sarvadharmānupalabdhilakṣaṇādhigamanatayā",
  "SA02n2877:1086": " | ( a va saṃ , pṛ 3 )",
  "SA02n2877:1090": "tatra grāhyagrāhakākāradhāraṇī",
  "SA02n2877:1091": "buddhiścaturdhātupañcaskandhasvarūpaṣaḍviṣayātmakāṅganāsvabhāv prajñā | ( a va saṃ , pṛ 39 )",
  "SA02n2877:1095": "prajñā citraṃ vipākaśca vimardaśca vilakṣaṇam |",
  "SA02n2877:1099": "asyāstattvamato viddhi yenāsi jagato vibhuḥ ||",
  "SA02n2877:1103": "prajñā bhavaḥ samaścāsau trikāyaṃ ca triyānakam|",
  "SA02n2877:1108": "saiva caraṃ sukhopāyaṃ yogināṃ tadahaṃ param ||",
  "SA02n2877:1112": "mañjuvajro mahāmāyā vajraḍākastathā'pare |",
  "SA02n2877:1116": "prajñaiva bhedato bhāti yuktiḥ saiva jinātmikā ||",
  "SA02n2877:1121": "vijñāyāpagataṃ cittaṃ nirālambamanuttaram |",
  "SA02n2877:1125": "śāntaṃ śuddhaṃ nirābhāsaṃ vittaḥ prajñeti",
  "SA02n2877:1126": "kīrtitā ||",
  "SA02n2877:1130": "( a va saṃ , pṛ 52 )",
  "SA02n2877:1134": "prajñājñānābhiṣekaḥ",
  "SA02n2877:1138": "prajñājñānamityatra vyutpattidvayam - prajñayā",
  "SA02n2877:1139": "jñānam , prajñaiva bāhyajñānama |",
  "SA02n2877:1140": "tatra grāhyagrāhakākāradhāraṇī buddhiścaturdhātupañcaskandhasvarūpaṣaḍviṣayātmakāṅganāsvabhāvā",
  "SA02n2877:1141": "prajñā | tasyā nimittabhūtāyā bodhicittajñānamiti purvā vyutpattiḥ |",
  "SA02n2877:1142": "ākāradvayaśūnyā saiva vijñānamityaparā vyutpattiḥ |",
  "SA02n2877:1146": "( a va saṃ , pṛ 38-39 )",
  "SA02n2877:1150": "prāṇāyāmaḥ",
  "SA02n2877:1154": "prāṇāyāmo nāma lalanārasanāvāmadakṣiṇamārganirodhaḥ",
  "SA02n2877:1155": " | avadhūtīmadhyabhāge prāṇavāyoḥ sadā pravṛttiriti |",
  "SA02n2877:1156": "pūrakakumbhakarecakayogenāvadhūtyāṃ omkāraṇa śvāsaṃ hūṃkāreṇa nirodhaṃ āḥkāreṇa",
  "SA02n2877:1157": "niśvāsaṃ candrasūryarāhusvabhāvena kurute yogīti prāṇāyāmāṅgam | ( se ṭī , pṛ 38-39 )",
  "SA02n2877:1161": "bhavyatānujñā",
  "SA02n2877:1165": "maṇḍalatattvaṃ maṇḍalaviśuddhilakṣaṇaṃ",
  "SA02n2877:1166": "devatātattvaṃ devatāviśuddhilakṣaṇamācāryaparikarma ca maṇḍalasādhanajñānaṃ",
  "SA02n2877:1167": "pañcapradīpaṃ cāmṛtabhakṣaṇaṃ ca bhavyatātattvaṃ ca naiḥsvābhāvyam |",
  "SA02n2877:1168": "eṣāmutpannakramapakṣato",
  "SA02n2877:1169": "dharmacakraprarvatanārthamanujñā ( bhavyatānujñā ) | ( a va saṃ , pṛ 38 )",
  "SA02n2877:1173": "bhāvāḥ",
  "SA02n2877:1177": "bhavanti hetupratyayebhyaḥ sakāśāditi bhāvāḥ",
  "SA02n2877:1178": "skandhadhātvāyatanādikāḥ sthiracalāḥ padārthāḥ |",
  "SA02n2877:1182": "( se ṭī , pṛ 59 )",
  "SA02n2877:1186": "bhāvanā",
  "SA02n2877:1190": "lalāṭe kāyabhāvanā |",
  "SA02n2877:1191": "hṛdi vāgbhāvanā | guhye",
  "SA02n2877:1192": "cittabhāvanā |",
  "SA02n2877:1193": "kāyādibindūnāṃ samāhāra ekatvaṃ vajramaṇau ,",
  "SA02n2877:1194": "tatra jñānabhāvanā ( se ṭī , pṛ 62 )",
  "SA02n2877:1198": "maṇḍalam",
  "SA02n2877:1202": "maṇḍalaṃ sāramityuktaṃ bodhicittaṃ mahatsukham|",
  "SA02n2877:1207": "ādānaṃ tat karotīti maṇḍalaṃ malanaṃ matam |",
  "SA02n2877:1210": "( he ta , 2 3 7 )",
  "SA02n2877:1214": "mantrajāpaḥ",
  "SA02n2877:1218": "mantrajāpo nāma prāṇasaṃyamaḥ | ( se ṭī , pṛ 43 )",
  "SA02n2877:1222": "mahāmudrā",
  "SA02n2877:1226": "mahatī cāsau mudrā mahāmudrā |",
  "SA02n2877:1227": "mahāmudrā niḥsvabhāvā",
  "SA02n2877:1228": "jñānajñeyādyāvaraṇavarjitā śaradamalamadhyāhnagaganasaṃkāśā",
  "SA02n2877:1229": "sakalasampadādhārabhūtā bhavanirvāṇaikasvarūpā anālambanakaruṇāśarīrā",
  "SA02n2877:1230": "mahāsukhaikasvarūpā |",
  "SA02n2877:1231": "tayā mahāmudrayā'cintyasvarūpayā samayamudrākhyaṃ phalaṃ",
  "SA02n2877:1232": "jāyate |",
  "SA02n2877:1236": "( a va saṃ , pṛ 34-35 )",
  "SA02n2877:1240": "mahatī cāsau mudrā ca mahāmudrā | mahattvaṃ",
  "SA02n2877:1241": "punarasyāḥ sarvākāravaropetatvaṃ na prādeśikatvam |",
  "SA02n2877:1242": "phalamudrā tu mahāmudrā |",
  "SA02n2877:1243": "mahattvaṃ cāsyāḥ prahāṇamahattvenādhigamamahattvena ca |",
  "SA02n2877:1244": "tatra prahāṇa mahattvaṃ",
  "SA02n2877:1245": "sarvāsanasarvaviraṇaprahāṇalakṣaṇasvābhāvikākhyaprabhāsvarasākṣātkaraṇalakṣaṇam",
  "SA02n2877:1246": " | adhigamamahattvaṃ tu pariśuddhasarvavuddhātmakayuganaddhākhyakāyasākṣātkārasvabhāvam",
  "SA02n2877:1247": " | ( seṭī , pṛ 56-57 )",
  "SA02n2877:1251": "mahāmudrayā niṣpandākṣarabhāvanā tu",
  "SA02n2877:1252": "sarvajñatvalakṣaṇalokottarasiddhisādhanī ( se ṭī , pṛ 62 )",
  "SA02n2877:1255": "mudrā",
  "SA02n2877:1259": "mudaṃ sukhaviśeṣaṃ ratiṃ dadātīti mudrā | mudaṃ",
  "SA02n2877:1260": "paramākṣarasukhajñānalakṣaṇāṃ ratiṃ sarvakālamādatte pūrvāvasthāyā",
  "SA02n2877:1261": "acalanayogeneti mudrā | ( se ṭī , pṛ 56 )",
  "SA02n2877:1265": "mudrāsamayaḥ",
  "SA02n2877:1269": "sveṣṭadevatāsvabhāvastvamiti khyāpayituṃ",
  "SA02n2877:1270": "mudrāsamayaḥ | ( a va saṃ , pṛ 38 )",
  "SA02n2877:1274": "yuganaddhakāyaḥ",
  "SA02n2877:1278": "saṃvṛtisatyameva ca",
  "SA02n2877:1279": "paramārthasatyātmakaprabhāsvarapariśuddhamādarśajñānādirūpavairocanādyādheyadevatāvṛndaṃ",
  "SA02n2877:1280": "kūṭāgārādyādhāramaṇḍalaṃ ca |",
  "SA02n2877:1281": "tadeva lokottaramaṇḍalatayā sarvatantrarājeṣu",
  "SA02n2877:1282": "gīyate | samastabuddhadharmasvabhāvatayā caitadeva",
  "SA02n2877:1283": "satyadvayādvaidhībhāvasvabhāvaṃ yuganaddhākhyamucyate |",
  "SA02n2877:1284": "tasmād yuganaddhakāya",
  "SA02n2877:1285": "eva dharmakāyaḥ sāṃbhogikasvābhāvikābhyāṃ pṛthagbhūto yogipratyātmavedyaḥ | ( se ṭī , pṛ 57 )",
  "SA02n2877:1289": "yogāṅgacatuṣṭayam",
  "SA02n2877:1292": "sevā",
  "SA02n2877:1296": "sevyate mumukṣubhirabhyasyata iti sevā |",
  "SA02n2877:1297": "dhūmādibimbadarśanaparyantaṃ pratyāhārāṅgaṃ dhyānāṅgaṃ ca |",
  "SA02n2877:1298": "sā khalūttamā sevā",
  "SA02n2877:1299": "jñānāmṛtenaiva ṣaḍaṅgayogenaiva kartavyā | ( se ṭī , pṛ 36 )",
  "SA02n2877:1303": "dhūmādinimittabhāvanā sevā | ( se ṭī , pṛ36 )",
  "SA02n2877:1307": "sevākāle mahoṣṇīṣabimbaṃ vibhāvya yatnataḥ |",
  "SA02n2877:1311": "upasādhanakāle tu bimbaṃ cāmṛtakuṇḍalīm ||",
  "SA02n2877:1315": "sādhane devatābimbaṃ bhāvayed yogatatparaḥ |",
  "SA02n2877:1319": "mahāsādhanakāle tu bimba buddhādhipaṃ vibhum ||",
  "SA02n2877:1323": "( seṭī , pṛ 39 )",
  "SA02n2877:1327": "atra sandhyābhāṣāntareṇoṣṇīṣabimbaṃ buddhabimbaṃ",
  "SA02n2877:1328": "traidhātukamaśeṣataḥ |",
  "SA02n2877:1329": "ākāśe dharmodaye cittavajraṃ pratiṣṭhāpya sevākāle",
  "SA02n2877:1330": "prathamakāle pratyāhāreṇa bhāvayed dhyānāṅgena sthirīkuryāditi |",
  "SA02n2877:1334": "( se ṭī , pṛ 39 )",
  "SA02n2877:1338": "evaṃ pratyāhāreṇa dhyānena sevāṅgamucyate | ( se ṭī , pṛ 41 )",
  "SA02n2877:1345": "amṛtakuṇḍalībimbasaṃjñayā sandhyābhāṣāntareṇa",
  "SA02n2877:1346": "vāyurucyate |",
  "SA02n2877:1347": "evaṃ bindusthāne piṇḍarupeṇa",
  "SA02n2877:1348": "nirodhitaḥ prāṇaḥ |",
  "SA02n2877:1349": "tenaiva tasya dhāraṇocyate |",
  "SA02n2877:1350": "evamaṅgadvayenopasādhanamamṛtakuṇḍalībimbeneti",
  "SA02n2877:1351": " | tadevopasādhanaṃ vajrajāpa ityucyate |",
  "SA02n2877:1352": "prāṇāyāmadhāraṇopasādhanamucyate | ( se ṭī , pṛ41-42 )",
  "SA02n2877:1356": "sādhanam",
  "SA02n2877:1360": "sādhane devatābimbamiti |",
  "SA02n2877:1361": "iha dhāraṇābalena nābhisthāṃ",
  "SA02n2877:1362": "caṇḍālīṃ jvalitāṃ paśyati yogī sarvāvaraṇarahitāṃ pratisenopamāṃ",
  "SA02n2877:1363": "mahāmudrāmanantabuddharaśmimeghān sphārayantīṃ prabhāmaṇḍalavirājitām |",
  "SA02n2877:1364": "tāmanusmṛtiṃ sādhanamāha | ( se ṭī , pṛ 42 )",
  "SA02n2877:1368": "mahāsādhanam",
  "SA02n2877:1372": "dhāraṇānte caṇḍālīṃ yogī bhāvayediti niyamaḥ |",
  "SA02n2877:1373": "tatastasyā jñānārciṣā skandhadhātvāyatanādīni dagdhānyekalolībhavanti |",
  "SA02n2877:1374": "vāmadakṣiṇanāḍīgatāni",
  "SA02n2877:1375": "vijñānādīni pṛthivyādīni ca maṇḍalasvabhāvāni lalāṭe candramaṇḍale praviṣṭāni |",
  "SA02n2877:1376": "tataścaṇḍālyā jñānārciṣā candre drute sati yad bodhicittaṃ bindurūpeṇādhogataṃ",
  "SA02n2877:1377": "kaṇṭhe hṛdi nābhau guhyakamale ānandaparamaviramasvabhāvena |",
  "SA02n2877:1378": "tato vajramaṇiṃ",
  "SA02n2877:1379": "yāvat sahajānandasvabhāveneti |",
  "SA02n2877:1380": "athavā vicitravipākavimardavilakṣaṇasvabhāvenetyevaṃ",
  "SA02n2877:1381": "ṣoḍaśakalāpūrṇaṃ maṇyantargataṃ yadā sukhaṃ dadāti bhāvanābalena |",
  "SA02n2877:1382": "( surata ) sadṛśamiti dṛṣṭāntamātram | svarūpato",
  "SA02n2877:1383": "dvīndriyajaṃ ( sukhaṃ )",
  "SA02n2877:1384": "koṭisahasratamāmapi kalāṃ nārhati paramākṣarasukhasyeti",
  "SA02n2877:1385": " | ihākṣarasukhāvasthā yā sahajānandarūpiṇī sā'vasthā kāpyavijñeyā vālayoginām , ( sā )",
  "SA02n2877:1386": "bodhisattvaiḥ śūnyatāsamādhirityucyate ,",
  "SA02n2877:1387": "na punarlaukikarūḍhayaiva nāstikyārthānupātinī",
  "SA02n2877:1388": " | evaṃ ṣaḍaṅgayogena buddhatvaṃ yogināṃ siddhayati | ( se ṭī , pṛ 42 )",
  "SA02n2877:1391": "yogī",
  "SA02n2877:1395": "yogaḥ ṣaḍaṅgayogo labdhotkarṣaparyantaḥ ,",
  "SA02n2877:1396": "sa yogo seṣāmasti te yogino",
  "SA02n2877:1397": "mahāvajradharapadaprāptāḥ |",
  "SA02n2877:1401": "( se ṭī , pṛ 60 )",
  "SA02n2877:1405": "vajram",
  "SA02n2877:1409": "yathā akṣobhyamudrayā jñānaṃ maulaṃ pṛṣṭhamanyat",
  "SA02n2877:1410": ", tathā vajrasattvamudrayā",
  "SA02n2877:1411": "vijñānamapi pṛṣṭhaṃ maulaṃ vajramiti syāt |",
  "SA02n2877:1412": "uktaṃ ca vajraśekhare -",
  "SA02n2877:1416": "dṛḍhaṃ sāmasasauśīryamacchedyābhedyalakṣaṇam |",
  "SA02n2877:1420": "adāhi avināśi ca śūnyatāvajramucyate || ( a va saṃ , pṛ 32 , 37 )",
  "SA02n2877:1424": "dvādaśāṅguliparimāṇena dvādaśāṅgapratītyasamutpādaviśuddhayā",
  "SA02n2877:1425": "vajram | abhedyaṃ vajramiti hevajre | ( a va saṃ , pṛ 37 )",
  "SA02n2877:1429": "vajraghaṇṭā",
  "SA02n2877:1433": "vajraghaṇṭā'pi pūrvābhisandhānena dvādaśāṅgulaparimāṇā'ghomukhāmbhojavajrasamāpattiniḥsvabhāvattvena",
  "SA02n2877:1434": "sarvadharmasvabhāvaṃ pratipādayitumabhedyajñānanigadatāṃ dharmodayasya",
  "SA02n2877:1435": "bodhayituṃ mūrdhādhobhāte ca vajrāvalīyugalamālinī | ( a va saṃ , pṛ 37 )",
  "SA02n2877:1439": "vajrajāpaḥ",
  "SA02n2877:1443": "prāṇāyāma iti vajrajāpa iti ca madhyamābhinnāṅgatvena",
  "SA02n2877:1444": "japtavyaḥ | ( se ṭī , pṛ 33 )",
  "SA02n2877:1448": "tadevopasādhanaṃ vajrajāpa ityucyate | ( se ṭī , pṛ 42 )",
  "SA02n2877:1452": "vajradhātvīśvarī",
  "SA02n2877:1456": "āsāṃ ( locanā -māmakī-pāṇḍaravāsinī-tāriṇīnāṃ )",
  "SA02n2877:1457": "madhye ālisvabhāvā vajrasattvasvarūpiṇī",
  "SA02n2877:1458": "vajradhātvīśvarī nāyikā |",
  "SA02n2877:1459": "iyameva bhagavatī tathatā śūnyatā prajñāpāramitā",
  "SA02n2877:1460": "bhūtakoṭinairātmyeti vyapadiśyate | ( a va saṃ , pṛ 43 )",
  "SA02n2877:1464": "vajravratābhiṣekaḥ",
  "SA02n2877:1468": "rūpādiviṣayacakṣurādīndriyasaṃśuddhiḥ prākṛtaviṣayaniyamena",
  "SA02n2877:1469": "mahāmudrāsiddhiprāpakatvād vajravratābhiṣekaḥ pañcamaḥ | ( se ṭī , pṛ 21 )",
  "SA02n2877:1473": "vajrasamayaḥ",
  "SA02n2877:1477": "itaḥ prabhṛti asaṃskṛto",
  "SA02n2877:1478": "bhedayugaddhavāhibodhidharmasamayastvamiti bodhayituṃ vajrasamayaḥ | ( a va saṃ , pṛ 38 )",
  "SA02n2877:1482": "vajrasattvaḥ",
  "SA02n2877:1486": "vajreṇa śūnyatā proktā sattvena jñānamātratā |",
  "SA02n2877:1490": "tādātmyamanayoḥ siddhaṃ vajrasattvasvabhāvataḥ ||",
  "SA02n2877:1495": "śūnyatākṛpayorbhedaḥ pradīpālokayoriva |",
  "SA02n2877:1499": "śūnyatākṛpayoraikyaṃ pradīpālokayoriva ||",
  "SA02n2877:1503": "bhāvebhyaḥ śūnyatā nānyā na ca bhāvo'sti tāṃ",
  "SA02n2877:1504": "vinā |",
  "SA02n2877:1508": "avinābhāvakamiyat kṛtakānityayoriva ||",
  "SA02n2877:1512": "( a va saṃ , pṛ48 )",
  "SA02n2877:1516": "viśvabimbam",
  "SA02n2877:1520": "antarālāvalambitayā'rdhonmīlitalocanābhyāṃ",
  "SA02n2877:1521": "śūnya ākāśe grāhyagrāhakarahite yannānukalpitaṃ svapnavad bimbaṃ yogipratyakṣaṃ",
  "SA02n2877:1522": "tadvimbaṃ viśvabimbam | ( se ṭī , pṛ 48 )",
  "SA02n2877:1526": "vīryam",
  "SA02n2877:1530": "vīryaṃ cāṣṭalokadharmābādhopasahanatayā ( a va saṃ , pṛ 3 )",
  "SA02n2877:1534": "vratavyākaraṇam",
  "SA02n2877:1538": "bāhyavratanirākaraṇārthaṃ vajravratasānam pṛthivyādisvabhāvatāsūcanāya",
  "SA02n2877:1539": "vyākaraṇam |",
  "SA02n2877:1540": "tathā hi bhuvo dharādeḥ svaḥ svarūpaṃ bhūrbhūyā iti hi bhūrbhuḥsvarityasyārthaḥ",
  "SA02n2877:1541": " | ( a va saṃ , pṛ 38 )",
  "SA02n2877:1545": "śarīradānam",
  "SA02n2877:1549": "śarīradānaṃ kṛtvā caryāṃ kṛtavān ,",
  "SA02n2877:1550": "“ śarīradānāṃ dattvā ca paścāt caryāṃ samārabhet “ ( he ta 1",
  "SA02n2877:1551": "6 19 ) iti vacanāt |",
  "SA02n2877:1552": "dānaṃ cattaṃ ca śarīrāvadhi ( a va saṃ , pṛ 3 )",
  "SA02n2877:1556": "śāntam",
  "SA02n2877:1560": "aṣṭādaśadhātuvikārarahitam | ( se ṭī , pṛ 60 )",
  "SA02n2877:1563": "śīlam",
  "SA02n2877:1567": "kāyavākcetasāṃ sarvasattvārthāya saṃvaraṇācchīlam",
  "SA02n2877:1568": " | ( a va saṃ , pṛ 3 )",
  "SA02n2877:1572": "śuddham",
  "SA02n2877:1576": "kleśamalairasaṃspṛṣṭam | ( se ṭī , pṛ 60 )",
  "SA02n2877:1580": "śuddhakāyaḥ",
  "SA02n2877:1584": "apratiṣṭhitanirvāṇākhyamahāsukhasaṃjñakaḥ",
  "SA02n2877:1585": "śuddhakāyaḥ |",
  "SA02n2877:1586": "mahāsukhasaṃjñakaśuddhakāyād viparītena yaḥ kāyabinduḥ sa",
  "SA02n2877:1587": "turyāvasthākṣayataḥ śuddhakāyaḥ |",
  "SA02n2877:1588": "dharmasaṃbhoganirmāṇakāyāḥ śuddhakāyāt",
  "SA02n2877:1589": "sphuranti | ( se ṭī , pṛ 55-56 )",
  "SA02n2877:1593": "śūnyam",
  "SA02n2877:1597": "prāṇināṃ maraṇānte skandhaparityāgādutpattyaṃśikaskandhagrahaṇād",
  "SA02n2877:1598": "yadantarālaṃ śūnyatālakṣaṇamekaṃ tribhuvanadarśanaṃ tacchūnyamityucyate | ( se ṭī , pṛ 43 )",
  "SA02n2877:1602": "śūnyatā",
  "SA02n2877:1606": "sarvākāravaropetaśūnyatālakṣaṇā ( a va saṃ , pṛ 40 )",
  "SA02n2877:1610": "ṣaṭpāramitā",
  "SA02n2877:1614": "dānaṃ gomayamambunā ca sahitaṃ śīlaṃ ca saṃmārjanaṃ",
  "SA02n2877:1618": "kṣāntiḥ",
  "SA02n2877:1619": "kṣudrapipīlikāpanayanaṃ vīryaṃ kriyāsthāpanam |",
  "SA02n2877:1623": "dhyānaṃ tatkṣaṇamekacittakaraṇaṃ prajñā",
  "SA02n2877:1624": "surekhojjvalā",
  "SA02n2877:1628": "etāḥ pāramitāḥ ṣaḍeva labhate kṛtvā munermaṇḍalam ||",
  "SA02n2877:1633": "bhavati kanakavarṇaḥ sarvarogairvimuktaḥ",
  "SA02n2877:1637": "suramanujaviśiṣṭaścandravad dīptakāntiḥ |",
  "SA02n2877:1641": "dhanakanakasamṛddho jāyate rājavaṃśe",
  "SA02n2877:1645": "sugatavaragṛhe'smin kāyakarmāṇi kṛtvā ||",
  "SA02n2877:1649": "( a va saṃ , pṛ 6 )",
  "SA02n2877:1653": "samayamudrā",
  "SA02n2877:1657": "sambhoganirmāṇakāyākārasvabhāvena svacchākāreṇa",
  "SA02n2877:1658": "ca sattvārthāya vajradharasya herukākāreṇa visphuraṇaṃ yat sā",
  "SA02n2877:1659": "samayamudretyabhidhīyate |",
  "SA02n2877:1660": "tāṃ ca samayamudrāṃ gṛhītvā cakrākāreṇa pañcavidhaṃ",
  "SA02n2877:1661": "jñānaṃ pañcavidhaṃ parikalpya ādarśa-samatā-pratyavekṣaṇā - kṛtyānuṣṭhā",
  "SA02n2877:1662": "-suviśuddhadharmadhātubhiḥ ,",
  "SA02n2877:1663": "ādiyogamaṇḍalarājāśri-karmarājāśri-binduyoga-sūkṣmayogaiḥ",
  "SA02n2877:1664": "samayamudrācakaṃ bhāvayantyācāryāḥ |",
  "SA02n2877:1668": "( a va saṃ , pṛ 35 )",
  "SA02n2877:1672": "samājaḥ",
  "SA02n2877:1676": "samāsataścittaṃ samājarūpīti | samāsataḥ",
  "SA02n2877:1677": "sarvadharmāṇāmekākārarūpato yaduta mahāsukhākārataścittamiti bodhicittaṃ",
  "SA02n2877:1678": "samājarūpīti |",
  "SA02n2877:1679": "dharmamudrāmahāmudrābhiṣekarūpaṃ vā jñānaṃ sat samāja",
  "SA02n2877:1680": "ityabhidhīyate | ( a va saṃ , pṛ 35 )",
  "SA02n2877:1684": "samāropaḥ",
  "SA02n2877:1688": "sakalakalpanākalaṅkānaṅkitā mahāmudrābhāvanā",
  "SA02n2877:1689": "samāropaḥ | ( se ṭī , pṛ 483 )",
  "SA02n2877:1693": "sahajam",
  "SA02n2877:1700": "sahajaṃ sat sarvaṃ sahajacchāyānukāritvāt",
  "SA02n2877:1701": "sahajamityabhidhīyate |",
  "SA02n2877:1702": "sahajacchāyā sahajasadṛśaṃ jñānaṃ pratipādayatīti |",
  "SA02n2877:1703": "sahajaṃ prajñājñānam |",
  "SA02n2877:1704": "ata eva prajñājñānāt sahajasyotpattirnāsti |",
  "SA02n2877:1705": "yasmāt sahajaṃ",
  "SA02n2877:1706": "nāma svarūpaṃ sarvadharmāṇāmakṛtrimam ,",
  "SA02n2877:1707": "svalakṣaṇamiti yāvat |",
  "SA02n2877:1708": "ācāryāḥ kuśalatayā",
  "SA02n2877:1709": "prajñājñānamāsādya sahajamanubhūtamiti kṛtvā santoṣamutpādayanti ,",
  "SA02n2877:1710": "santuṣṭāśca santo dharmamudrāyā vārtāmapi na",
  "SA02n2877:1711": "jānanti | dharmamudrāmajānānāḥ kevalayā karmamudrayā kṛtrimayā kathamakṛtrimabhūtaṃ",
  "SA02n2877:1712": "sahajākhyaṃ jñānamutpadyate |",
  "SA02n2877:1713": "sajātīyāt kāraṇāt sajātīyasyaiva",
  "SA02n2877:1714": "kāryasyotpattirbhavati ,",
  "SA02n2877:1715": "na tu vijātīyāt | yathā",
  "SA02n2877:1716": "śālibījāt śālyaṅkurotpattirbhavati ,",
  "SA02n2877:1717": "na tu kodravasya |",
  "SA02n2877:1718": "tathā dharmamudrāyā akṛtrimāyāḥ",
  "SA02n2877:1719": "sakāśādakṛtrimaṃ sahajamutpadyate |",
  "SA02n2877:1720": "karmāṅganāyā ānandasandoharatnākaraṃ",
  "SA02n2877:1721": "saroruham | tat svacchamāsthānaṃ bolakakkolarasasaṃyogena avadhūtyā saṃvṛtibodhicittamaṇyantargataṃ",
  "SA02n2877:1722": "yadā bhavet ,",
  "SA02n2877:1723": "kṣaṇikanāmāparaṃ",
  "SA02n2877:1724": "sahajākhyaṃ jñānamutpadyate | ( a va saṃ , pṛ 32-33 )",
  "SA02n2877:1728": "sahajatanuḥ",
  "SA02n2877:1732": "ādhyātmikī vidyā prajñāpāramitā prakṛtiprabhāsvarā",
  "SA02n2877:1733": "mahāmudrā sahajānandarūpiṇī dharmadhātuniṣpandapūrṇāvasthā sahajatanurityucyate",
  "SA02n2877:1734": " | ( se ṭī , pṛ 69 )",
  "SA02n2877:1738": "binduḥ śūnyo bhavati |",
  "SA02n2877:1739": "sa ca biduracyutaḥ san",
  "SA02n2877:1740": "paramākṣara ucyate |",
  "SA02n2877:1741": "paramākṣaro'pyakāraḥ |",
  "SA02n2877:1742": "akārasaṃbhavaḥ samyaksaṃbuddhaḥ",
  "SA02n2877:1743": "prajñopāyātmako vajrasattvo napuṃsakapadaṃ sahajakāya ityucyate | sa ca",
  "SA02n2877:1744": "kālacakro bhagavān paramākṣaraḥ sukhapadam | ( se ṭī , pṛ 69 )",
  "SA02n2877:1748": "sādṛśyam",
  "SA02n2877:1752": "sādṛśyaṃ yathā darpaṇārpitaṃ mukhasya",
  "SA02n2877:1753": "pratibimbaṃ mukhaṃ na bhavati |",
  "SA02n2877:1754": "na pūrvaṃ siddhirnāpyadhunā siddhayati | tadeva",
  "SA02n2877:1755": "mukhapratibimbaṃ sādṛśyamātramāpādayati ,",
  "SA02n2877:1756": "tathāpi lokāḥ svamukhaṃ dṛṣṭamiti ṛtvā",
  "SA02n2877:1757": "bhrāntyā santuṣṭā bhavanti | ( a va saṃ , pṛ 32-33 )",
  "SA02n2877:1761": "siddhiḥ",
  "SA02n2877:1765": "siddhistraidhātukeśvaratvam | ( seṭī , pṛ 47 )",
  "SA02n2877:1769": "sukham",
  "SA02n2877:1773": "sikhaṃ dvīndriyajaṃ tattvaṃ devāṇāṃ rāgiṇāṃ smṛtam|",
  "SA02n2877:1778": "trailokyācāranirmuktaṃ buddhānāṃ sukhamakṣaram ||",
  "SA02n2877:1783": "hasitekṣaṇādinirmuktaṃ sarvadvandvavivarjitam |",
  "SA02n2877:1787": "kāryakāraṇanirmuktaṃ trailokyābhāsamadvayam ||",
  "SA02n2877:1791": "apratiṣṭhaṃ yathā''kāśaṃ vyāpi lakṣaṇavarjitam|",
  "SA02n2877:1796": "uktaṃ tatparam tattvaṃ vajrajñāanamanuttaram ||",
  "SA02n2877:1800": "apratiṣṭhaṃ yathā''kāśaṃ vyāpi lakṣaṇavarjitam|",
  "SA02n2877:1805": "anirdeśyamarūpaṃ ca etattattvasya lakṣaṇam ||",
  "SA02n2877:1809": "yadviśuddhamivākāśamajñānatimirākulaiḥ |",
  "SA02n2877:1813": "candrakairiva saṃcchannaṃ vastubhirvedyate",
  "SA02n2877:1814": "jinaiḥ ||",
  "SA02n2877:1818": "( se ṭī , pṛ 58-59 )",
  "SA02n2877:1821": "sekaḥ",
  "SA02n2877:1825": "bāhyavāriṇeva bāhyamalasya avidyāmalakṣālanāya",
  "SA02n2877:1826": "sicyate'neneti sekaḥ |",
  "SA02n2877:1830": "( a va saṃ , pṛ 36 )",
  "SA02n2877:1834": "svabhāvaḥ",
  "SA02n2877:1838": "svabhāvaścaivā [ nā ] dyanutpannaṃ na satyaṃ na mṛṣeti ca |",
  "SA02n2877:1839": "pañcākārāṇāṃ",
  "SA02n2877:1840": "pratītyasamutpannānāṃ pañcatathāgatasvabhāvatvam ,",
  "SA02n2877:1841": "svabhāvasya ca śūnyatākaruṇā'bhinnatvāt",
  "SA02n2877:1842": "śūnyatākaruṇā'bhinnaṃ jagaditi sthitam |",
  "SA02n2877:1846": "pratītyasambhavādeva gandharvapuravat sphuṭam |",
  "SA02n2877:1850": "na svabhāvasthitaṃ viśvaṃ nākāśāmbhojasaṃnibham ||",
  "SA02n2877:1855": "uktaṃ ca hevajre -",
  "SA02n2877:1859": "amī dharmāstu nirvāṇaṃ mohāt saṃsārarūpiṇaḥ |",
  "SA02n2877:1863": "( a va saṃ , pṛ 26 -27 )",
  "SA02n2877:1867": "svādhiṣṭhānam",
  "SA02n2877:1871": "avādhiṣṭhānaṃ nāma saṃvṛteḥ satyadarśanam | ( se ṭī , pṛ 40 )",
  "SA02n2877:1875": "māyāsvapnagandharvapurapratisenādivadakalpitamaśeṣaskandhadhātvāyatanādidarśanaṃ",
  "SA02n2877:1876": "saṃvṛtisatyadarśanaṃ svādhiṣṭhānaṃ cocyate | ( se ṭī , pṛ 47 )",
  "SA02n2877:1880": "haṭhayogaḥ",
  "SA02n2877:1884": "idānīṃ haṭhayoga ucyate | iha yadā",
  "SA02n2877:1885": "pratyāhārādibhirbimbe duṣṭe satyapyakṣarakṣaṇaṃ notpadyate'yantritaprāṇatayā ,",
  "SA02n2877:1886": "tadā nādābhyāsād haṭhena prāṇaṃ madhyamāyāṃ",
  "SA02n2877:1887": "vāhayitvā prajñābjagatakuliśamaṇau bodhicittabindunirodhādakṣarakṣaṇaṃ",
  "SA02n2877:1888": "sādhayenniṣpandeneti haṭhayogaḥ |",
  "SA02n2877:1889": "nādābhyāso'traivoktaḥ |",
  "SA02n2877:1893": "( se ṭī , pṛ 45 )",
  "SA02n2877:1897": "hūṃkāraḥ",
  "SA02n2877:1901": "madhyavṛtterniruttaradharmatāsūcako hūṃkāraḥ |",
  "SA02n2877:1902": "tasyārthaḥ - h iti hetuviyuktaḥ ,",
  "SA02n2877:1903": "ū iti ūhāpagataḥ ,",
  "SA02n2877:1904": "aṃ iti apratiṣṭhitasarvadharma iti | ( a va saṃ , pṛ 37 )"
}