{
    "1336:0": "āvaraṇaparicchedo dvitīyaḥ",
    "1336:1": "vyāpi prādeśikodriktasamādānavivarjanam|",
    "1336:2": "dvayāvaraṇamākhyātaṃ navadhā kleśalakṣaṇam ||1||",
    "1336:3": "saṃyojanānyāvaraṇamudvegasamupekṣayoḥ|",
    "1336:4": "tattvadṛṣṭeśca satkāyadṛṣṭestadvastuno'pi ca||2||",
    "1336:5": "nirodhamārgaratneṣu lābhasatkāra eva ca|",
    "1336:6": "saṅkleśasya parijñāne śubhādau daśadhā'param||3||",
    "1336:7": "aprayogo'nāyatane'yogavihitaśca yaḥ|",
    "1336:8": "notpattiramanaskāraḥ sambhārasyā'prapūrṇatā||4||",
    "1336:9": "gotramitrasya vaidhuryaṃ cittasya parikheditā|",
    "1336:10": "pratipatteśca vaidhuryaṃ kuduṣṭajanavāsatā||5||",
    "1336:11": "dauṣṭhulyamavaśiṣṭatvaṃ trayāt prajñā'vipakvatā|",
    "1336:12": "prakṛtyā caiva dauṣṭhulyaṃ kausīdyaṃ ca pramāditā||6||",
    "1336:13": "saktirbhave ca bhoge ca līnacittatvameva ca|",
    "1336:14": "aśraddhā'nadhimuktiśca yathārutavicāraṇā||7||",
    "1336:15": "saddharme'gauravaṃ lābhe gurutā'kṛpatā tathā|",
    "1336:16": "śrutavyasanamalpatvaṃ samādhyaparikarmitā||8||",
    "1336:17": "śubhaṃ bodhiḥ samādānaṃ dhīmattvā'bhrāntyanāvṛtī|",
    "1336:18": "nṛtyatrāso'matsaritvaṃ vaśitvañca śubhādayaḥ||9||",
    "1336:19": "trīṇi trīṇi ca eteṣāṃ jñeyānyāvaraṇāni hi|",
    "1336:20": "pakṣyapāramitābhūmiṣvanyadāvaraṇaṃ punaḥ||10||",
    "1336:21": "vastvakauśalakausīdyaṃ samādherdvayahīnatā|",
    "1336:22": "aropaṇā'tha daurbalyaṃ dṛṣṭidauṣṭhulyaduṣṭatā||11||",
    "1336:23": "aiśvaryasyā'tha sugateḥ sattvā'tyāgasya cāvṛtiḥ|",
    "1336:24": "hānivṛddhyośca doṣāṇāṃ guṇānāmavatāraṇe||12||",
    "1336:25": "vimocane'kṣayatve ca nairantarye śubhasya ca|",
    "1336:26": "niyatīkaraṇe dharmasambhogaparipācane||13||",
    "1336:27": "sarvatragārthe agrārthe niṣyandāgrārtha eva ca|",
    "1336:28": "niṣparigrahatārtha ca santānā'bheda eva ca||14||",
    "1336:29": "nissaṅkleśaviśuddhyarthe'nānātvārtha eva ca|",
    "1336:30": "ahīnā'nadhikārthe ca caturdhāvaśitāśraye||15||",
    "1336:31": "dharmadhātāvavidyeyamakliṣṭā daśadhāvṛtiḥ|",
    "1336:32": "daśabhūmivipakṣeṇa pratipakṣāstu bhūmayaḥ||16||",
    "1336:33": "kleśāvaraṇamākhyātaṃ jñeyāvaraṇameva ca|",
    "1336:34": "sarvāṇyāvaraṇānīha yatkṣayānmuktiriṣyate||17||",
    "1336:35": "||ityāvaraṇaparicchedo dvitīyaḥ||"
}