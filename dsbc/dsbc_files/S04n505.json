{
  "S04n505:0": "indraketudhvajarājaparivartaḥ ||",
  "S04n505:1": "tatra khalu bhagavāṃścandraprabhaṃ kumārabhūtamāmantrayate sma-tasmāttarhi kumāra bodhisattvena mahāsattvena sarvakuśalamūlaśikṣāguṇadharmaniśritena bhavitavyam |",
  "S04n505:2": "asaṃsargabahulena ca bhavitavyam,",
  "S04n505:3": "pāpamitraparivarjakena kalyāṇamitrasaṃniśritena paripṛcchakajātīyena dharmaparyeṣṭyāmatṛptena prāmodyabahulena dharmārthikena dharmakāmena dharmaratena dharmaparigrāhakeṇa dharmānudharmapratipannena |",
  "S04n505:4": "śāstṛsaṃjñā anena sarvabodhisattveṣūtpādayitavyā |",
  "S04n505:5": "yasya cāntikādimaṃ dharmaparyāyaṃ śṛṇoti,",
  "S04n505:6": "tena tasyāntike prītigauravaṃ śāstṛsaṃjñā cotpāditavyā |",
  "S04n505:7": "yaḥ kumāra bodhisattvo mahāsattva imān dharmān samādāya vartate,",
  "S04n505:8": "sa kṣipramanācchedyapratibhāvaniryāto bhavati |",
  "S04n505:9": "acintyabuddhadharmādhimuktaśca bhavati |",
  "S04n505:10": "gambhīreṣu ca dharmeṣu nidhyaptiṃ gacchati |",
  "S04n505:11": "ālokabhūtaśca bhavati sadevakasya lokasya kāṅkṣāvimativicikitsāndhakāravidhamanatayā ||",
  "S04n505:12": "atha khalu bhagavāṃstasyāṃ velāyāmimā gāthā abhāṣata-",
  "S04n505:13": "abhyatīta bahukalpakoṭiyo",
  "S04n505:14": "aprameya atulā acintiyāḥ |",
  "S04n505:15": "yad abhūṣi dvipadānamuttamo",
  "S04n505:16": "indraketudhvajarāja nāyakaḥ || 1 ||",
  "S04n505:17": "so samādhimimu śāntu deśayi",
  "S04n505:18": "yatra nāsti naru jīva pudgalaḥ |",
  "S04n505:19": "māya budbuda marīci vidyutā",
  "S04n505:20": "sarva dharma dakacandrasaṃnibhāḥ || 2 ||",
  "S04n505:21": "nāsti sattva manujo ca labhyate",
  "S04n505:22": "kālu kṛtva paraloki gacchi yo |",
  "S04n505:23": "no ca karma kṛtu vipraṇaśyate",
  "S04n505:24": "kṛṣṇa śukla phala deti tādṛśam || 3 ||",
  "S04n505:25": "eṣa yukti nayadvāra bhadrakaṃ",
  "S04n505:26": "sūkṣma durdṛśu jināna gocarā |",
  "S04n505:27": "yatra akṣarapadaṃ na labhyate",
  "S04n505:28": "buddhabodhi bhagavān prajānati || 4 ||",
  "S04n505:29": "dhāraṇī vipulajñānasaṃcayā",
  "S04n505:30": "sūtrakoṭiniyutāna āgatā |",
  "S04n505:31": "buddhakoṭiniyutāna gocara-",
  "S04n505:32": "staṃ samādhi bhagavān prabhāṣate || 5 ||",
  "S04n505:33": "āturāṇamaya vyādhimocako",
  "S04n505:34": "bodhisattvasamudānitaṃ dhanam |",
  "S04n505:35": "sarvabuddhastuta saṃprakāśito",
  "S04n505:36": "devakoṭiniyutehi pūjitaḥ || 6 ||",
  "S04n505:37": "sarva bālajana bhūtacodanā",
  "S04n505:38": "tīrthikehi parivarjitaḥ sadā |",
  "S04n505:39": "śreṣṭha śīladhanu buddhavarṇitaṃ",
  "S04n505:40": "vidyuteva gagane na lipyate || 7 ||",
  "S04n505:41": "yehi pūjita jināna koṭiyo",
  "S04n505:42": "dānaśīlacaritā vicakṣaṇāḥ |",
  "S04n505:43": "pāpamitra puri yehi varjitā",
  "S04n505:44": "teṣa paitṛkadhanaṃ niruttaram || 8 ||",
  "S04n505:45": "tatra bhikṣu sthitu dharmabhāṇako",
  "S04n505:46": "brahmacāri sugatasya aurasaḥ |",
  "S04n505:47": "śrutva dharmamimamānulomikaṃ",
  "S04n505:48": "citta pādesi ya lokanāyakaḥ || 9 ||",
  "S04n505:49": "indraketudhvajarāju nāyako",
  "S04n505:50": "adhyabhāṣi abhu dharmabhāṇakam |",
  "S04n505:51": "bhikṣubhāva paramaṃ ti duṣkaraṃ",
  "S04n505:52": "cittupāda vara agrabodhaye || 10 ||",
  "S04n505:53": "śīlu rakṣa maṇiratnasaṃnibhaṃ",
  "S04n505:54": "mitra seva sada ānulomikam |",
  "S04n505:55": "pāpamitra na kadāci sevato",
  "S04n505:56": "buddhajñānamacireṇa lapsyase || 11 ||",
  "S04n505:57": "iti śrīsamādhirāje indraketudhvajarājaparivarto nāma viṃśatitamaḥ ||"
}