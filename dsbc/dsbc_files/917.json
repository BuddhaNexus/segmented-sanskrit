{
    "917:0": "CANTO III",
    "917:1": "tataḥ kadācinmṛduśādvalāni",
    "917:2": "puṃskokilonnāditapādapāni|",
    "917:3": "śuśrāva padmākaramaṇḍitāni",
    "917:4": "gītairnibaddhāni sa kānanāni||1||",
    "917:5": "śrutvā tataḥ strījanavallabhānāṃ",
    "917:6": "manojñabhāvaṃ purakānanānām|",
    "917:7": "bahiḥprayāṇāya cakāra buddhi-",
    "917:8": "mantargṛhe nāga ivāvarūddhaḥ||2||",
    "917:9": "tato nṛpastasya niśamya bhāvaṃ",
    "917:10": "putrābhidhānasya manorathasya|",
    "917:11": "snehasya lakṣmyā vayasaśca yogyā-",
    "917:12": "mājñāpayāmāsa vihārayātrām||3||",
    "917:13": "nivartayāmāsa ca rājamārge",
    "917:14": "saṃpātamārtasya pṛthagjanasya|",
    "917:15": "mā bhūtkumāraḥ sukumāracittaḥ",
    "917:16": "saṃvignacetā iti manyamānaḥ||4||",
    "917:17": "pratyaṅgahīnānvikalendriyāṃśca",
    "917:18": "jīrṇāturādīn kṛpaṇāṃśca dikṣu|",
    "917:19": "tataḥ samutsārya pareṇa sāmnā",
    "917:20": "śobhāṃ parāṃ rājapathasya cakuḥ||5||",
    "917:21": "tataḥ kṛte śrīmati rājamārge",
    "917:22": "śrīmānvinītānucaraḥ kumāraḥ|",
    "917:23": "prāsādapṛṣṭhādavatīrya kāle",
    "917:24": "kṛtābhyanujño nṛpamabhyagacchat||6||",
    "917:25": "atho narendraḥ sutamāgatāśruḥ",
    "917:26": "śirasyupāghrāya ciraṃ nirīkṣya|",
    "917:27": "gaccheti cājñāpayati sma vācā",
    "917:28": "snehānna cainaṃ manasā mumoca||7||",
    "917:29": "tataḥ sa jāmbūnadabhāṇḍabhṛdbhi-",
    "917:30": "ryuktaṃ caturbhirnibhṛtaisturaṅgaiḥ|",
    "917:31": "aklībavidvacchuciraśmidhāraṃ",
    "917:32": "hiraṇmayaṃ syandanamāruroha||8||",
    "917:33": "tataḥ prakīrṇojjvalapuṣpajālaṃ",
    "917:34": "viṣaktamālyaṃ pracalatpatākam|",
    "917:35": "mārgaṃ prapede sadṛśānuyātra-",
    "917:36": "ścandraḥ sanakṣatra ivāntarīkṣam||9||",
    "917:37": "kautūhalātsphītataraiśca netrai-",
    "917:38": "rnīlotpalārdhairiva kīryamāṇam|",
    "917:39": "śanaiḥ śanai rājapathaṃ jagāhe",
    "917:40": "pauraiḥ samantādabhivīkṣyamāṇaḥ||10||",
    "917:41": "taṃ tuṣṭuvuḥ saumyaguṇena keci-",
    "917:42": "dvavandire dīptatayā tathānye|",
    "917:43": "saumukhyatastu śriyamasya keci-",
    "917:44": "dvaipulyamāśaṃsiṣurāyuṣaśca||11||",
    "917:45": "niḥsṛtya kubjāśca mahākulebhyo",
    "917:46": "vyūhāśca kairātakavāmanānām|",
    "917:47": "nāryaḥ kṛśebhyaśca niveśanebhyo",
    "917:48": "devānuyānadhvajavatpraṇemuḥ||12||",
    "917:49": "tataḥ kumāraḥ khalu gacchatīti",
    "917:50": "śrutvā striyaḥ preṣyajanātpravṛttim|",
    "917:51": "didṛkṣayā harmyatalāni jagmu-",
    "917:52": "rjanena mānyena kṛtābhyanujñāḥ||13||",
    "917:53": "tāḥ srastakāñcīguṇavighnitāśca",
    "917:54": "suptaprabuddhākulalocanāśca|",
    "917:55": "vṛttāntavinyastavibhūṣaṇāśca",
    "917:56": "kautūhalenānibhṛtāḥ parīyuḥ||14||",
    "917:57": "prāsādasopānatalapraṇādaiḥ",
    "917:58": "kāñcīravairnūpuranisvanaiśca|",
    "917:59": "vitrāsayantyo gṛhapakṣisaṅghā-",
    "917:60": "nanyonyavegāṃśca samākṣipantyaḥ||15||",
    "917:61": "kāsāṃcidāsāṃ tu varāṅganānāṃ",
    "917:62": "jātatvarāṇāmapi sotsukānām|",
    "917:63": "gatiṃ gurutvājjagṛhurviśālāḥ",
    "917:64": "śroṇīrathāḥ pīnapayodharāśca||16||",
    "917:65": "śīghraṃ samarthāpi tu gantumanyā",
    "917:66": "gatiṃ nijagrāha yayau na tūrṇam|",
    "917:67": "hriyāpragalbhā vinigūhamānā",
    "917:68": "rahaḥprayuktāni vibhūṣaṇāni||17||",
    "917:69": "parasparotpīḍanapiṇḍitānāṃ",
    "917:70": "saṃmardasaṃkṣobhikuṇḍalānām|",
    "917:71": "tāsāṃ tadā sasvanabhūṣaṇānāṃ",
    "917:72": "vātayaneṣvapraśamo babhūva||18||",
    "917:73": "vātāyanebhyastu viniḥsṛtāni",
    "917:74": "parasparāyāsitakuṇḍalāni|",
    "917:75": "strīṇāṃ virejurmukhapaṅkajāni",
    "917:76": "saktāni harmyeṣviva paṅkajāni||19||",
    "917:77": "tato vimānairyuvatīkarālaiḥ",
    "917:78": "kautūhalodghāṭitavātayānaiḥ|",
    "917:79": "śrīmatsamantānnagaraṃ babhāse",
    "917:80": "viyadvimānairiva sāpsarobhiḥ||20||",
    "917:81": "vātāyanānāmaviśālabhāvā-",
    "917:82": "danyonyagaṇḍārpitakuṇḍalānām|",
    "917:83": "mukhāni rejuḥ pramodottamānāṃ",
    "917:84": "baddhāḥ kalāpā iva paṅkajānām||21||",
    "917:85": "taṃ tāḥ kumāraṃ pathi vīkṣamāṇāḥ",
    "917:86": "striyo babhurgāmiva gantukāmāḥ|",
    "917:87": "ūrdhvonmukhāścainamudīkṣamāṇā",
    "917:88": "narā babhurdyāmiva gantukāmāḥ||22||",
    "917:89": "dṛṣṭvā ca taṃ rājasutaṃ striyastā",
    "917:90": "jājvalyamānaṃ vapuṣā śriyā ca|",
    "917:91": "dhanyāsya bhāryeti śanairavoca-",
    "917:92": "ñśuddhairmanobhiḥ khalu nānyabhāvāt||23||",
    "917:93": "ayaṃ kila vyāyatapīnabāhū",
    "917:94": "rūpeṇa sākṣādiva puṣpaketuḥ|",
    "917:95": "tyaktvā śriyaṃ dharmamupaiṣyatīti",
    "917:96": "tasmin hi tā gauravameva cakruḥ||24||",
    "917:97": "kīrṇa tathā rājapathaṃ kumāraḥ",
    "917:98": "paurairvinītaiḥ śucidhīraveṣaiḥ|",
    "917:99": "tatpūrvamālokya jaharṣa kiṃci-",
    "917:100": "nmene punarbhāvamivātmanaśca||25||",
    "917:101": "puraṃ tu tatsvargamiva prahṛṣṭaṃ",
    "917:102": "śuddhādhivāsāḥ samavekṣya devāḥ|",
    "917:103": "jīrṇaṃ naraṃ nirmamire prayātuṃ",
    "917:104": "saṃcodanārthaṃ kṣitipātmajasya||26||",
    "917:105": "tataḥ kumāro jarayābhibhūtaṃ",
    "917:106": "dṛṣṭvā narebhyaḥ pṛthagākṛtiṃ tam|",
    "917:107": "uvāca saṃgrāhakamāgatāstha-",
    "917:108": "statraiva niṣkampaniviṣṭadṛṣṭiḥ||27||",
    "917:109": "ka eṣa bhoḥ sūta naro'bhyupetaḥ",
    "917:110": "keśaiḥ sitairyaṣṭiviṣaktahaṣṭaḥ|",
    "917:111": "bhrūsaṃvṛtākṣaḥ śithilānatāṅgaḥ",
    "917:112": "kiṃ vikriyaiṣā prakṛtiryadṛcchā||28||",
    "917:113": "ityevamuktaḥ sa rathapraṇetā",
    "917:114": "nivedayāmāsa nṛpātmajāya|",
    "917:115": "saṃrakṣyamapyarthamadoṣadarśī",
    "917:116": "taireva devaiḥ kṛtabuddhimohaḥ||29||",
    "917:117": "rūpasya hantrī vyasanaṃ balasya",
    "917:118": "śokasya yonirnidhana ratīnām|",
    "917:119": "nāśaḥ smṛtīnāṃ ripurindriyāṇā-",
    "917:120": "meṣā jarā nāma yayaiṣa bhagnaḥ||30||",
    "917:121": "pītaṃ hyanenāpi payaḥ śiśutve",
    "917:122": "kālena bhūyaḥ parisṛptamurvyām|",
    "917:123": "krameṇa bhūtvā ca yuvā vapuṣmān",
    "917:124": "krameṇa tenaiva jarāmupetaḥ||31||",
    "917:125": "ityevamukte calitaḥ sa kiṃci-",
    "917:126": "drājātmajaḥ sūtamidaṃ babhāṣe|",
    "917:127": "kimeṣa doṣo bhavitā mamāpī-",
    "917:128": "tyasmai tataḥ sārathirabhyuvāca||32||",
    "917:129": "āyuṣmato'pyeṣa vayaḥprakarṣo",
    "917:130": "niḥsaṃśayaṃ kālavaśena bhāvī|",
    "917:131": "evaṃ jarāṃ rūpavināśayitrīṃ",
    "917:132": "jānāti caivecchati caiva lokaḥ||33||",
    "917:133": "tataḥ sa pūrvāśayaśuddhabuddhi-",
    "917:134": "rvistīrṇakalpācitapuṇyakarmā|",
    "917:135": "śrutvā jarāṃ savivije mahātmā",
    "917:136": "mahāśanerghoṣamivāntike gauḥ||34||",
    "917:137": "niḥśvasya dīrghaṃ svaśiraḥ prakampya",
    "917:138": "tasmiṃśca jīrṇe viniveśya cakṣuḥ|",
    "917:139": "tāṃ caiva dṛṣṭvā janatāṃ saharṣāṃ",
    "917:140": "vākyaṃ sa saṃvigna idaṃ jagāda||35||",
    "917:141": "evaṃ jarā hanti ca nirviśeṣaṃ",
    "917:142": "smṛtiṃ ca rūpaṃ ca parākramaṃ ca|",
    "917:143": "na caiva saṃvegamupaiti lokaḥ",
    "917:144": "pratyakṣato'pīdṛśamīkṣamāṇaḥ||36||",
    "917:145": "evaṃ gate sūta nivartayāśvān",
    "917:146": "śīghraṃ gṛhāṇyeva bhavānprayātu|",
    "917:147": "udyānabhūmau hi kuto ratirme",
    "917:148": "jarābhaye cetasi vartamāne||37||",
    "917:149": "athājñayā bhartusutasya tasya",
    "917:150": "nivartayāmāsa rathaṃ niyantā|",
    "917:151": "tataḥ kumāro bhavanaṃ tadeva",
    "917:152": "cintāvaśaḥ śūnyamiva prapede||38||",
    "917:153": "yadā tu tatraiva na śarma lebhe",
    "917:154": "jarā jareti praparīkṣamāṇaḥ|",
    "917:155": "tato narendrānumataḥ sa bhūyaḥ",
    "917:156": "krameṇa tenaiva bahirjagāma||39||",
    "917:157": "athāparaṃ vyādhiparītadehaṃ",
    "917:158": "ta eva devāḥ sasṛjurmanuṣyam|",
    "917:159": "dṛṣṭvā ca taṃ sārathimābabhāṣe",
    "917:160": "śauddhodanistadgatadṛṣṭireva||40||",
    "917:161": "sthūlodaraḥ śvāsacalaccharīraḥ",
    "917:162": "srastāṃsabāhuḥ kṛśapāṇḍugātraḥ|",
    "917:163": "ambeti vācaṃ karuṇaṃ bruvāṇaḥ",
    "917:164": "paraṃ samāśritya naraḥ ka eṣaḥ||41||",
    "917:165": "tato'bravītsārathirasya saumya",
    "917:166": "dhātuprakopaprabhavaḥ pravṛddhaḥ|",
    "917:167": "rogābhidhānaḥ sumahānanarthaḥ",
    "917:168": "śakto'pi yenaiṣa kṛto'svatantraḥ||42||",
    "917:169": "ityūcivān rājasutaḥ sa bhūya-",
    "917:170": "staṃ sānukampo naramīkṣamāṇaḥ|",
    "917:171": "asyaiva jāto pṛthageṣa doṣaḥ",
    "917:172": "sāmānyato rogabhayaṃ prajānām||43||",
    "917:173": "tato babhāṣe sa rathapraṇetā",
    "917:174": "kumāra sādhāraṇa eṣa doṣaḥ|",
    "917:175": "evaṃ hi rogaiḥ paripīḍyamāno",
    "917:176": "rujāturo harṣamupaiti lokaḥ||44||",
    "917:177": "iti śrutārthaḥ sa viṣaṇṇacetāḥ",
    "917:178": "prāvepatāmbūrmigataḥ śaśīva|",
    "917:179": "idaṃ ca vākyaṃ karuṇāyamānaḥ",
    "917:180": "provāca kiṃcinmṛdunā svareṇa||45||",
    "917:181": "idaṃ ca rogavyasanaṃ prajānāṃ",
    "917:182": "paśyaṃśca viśrambhamupaiti lokaḥ|",
    "917:183": "vistīrṇamajñānamaho narāṇāṃ",
    "917:184": "hasanti ye rogabhayairamuktāḥ||46||",
    "917:185": "nivartyatāṃ sūta bahiḥprayāṇā-",
    "917:186": "nnarendrasadmaiva rathaḥ prayātu|",
    "917:187": "śrutvā ca me rogabhayaṃ ratibhyaḥ",
    "917:188": "pratyāhataṃ saṃkucatīva cetaḥ||47||",
    "917:189": "tato nivṛttaḥ sa nivṛttaharṣaḥ",
    "917:190": "pradhyānayuktaḥ praviveśa veśma|",
    "917:191": "taṃ dvistathā prekṣya ca saṃnivṛttaṃ",
    "917:192": "paryeṣaṇaṃ bhūmipatiścakāra||48||",
    "917:193": "śrutvā nimittaṃ tu nivartanasya",
    "917:194": "saṃtyaktamātmānamanena mene|",
    "917:195": "mārgasya śaucādhikṛtāya caiva",
    "917:196": "cukrośa ruṣṭo'pi ca nogradaṇḍaḥ||49||",
    "917:197": "bhūyaśca tasmai vidadhe sutāya",
    "917:198": "viśeṣayuktaṃ viṣayapracāram|",
    "917:199": "calendriyatvādapi nāma sakto",
    "917:200": "nāsmānvijahyāditi nāthamānaḥ||50||",
    "917:201": "yadā ca śabdādibhirindriyārthai-",
    "917:202": "rantaḥpure naiva suto'sya reme|",
    "917:203": "tato bahirvyādiśati sma yātrāṃ",
    "917:204": "rasāntaraṃ syāditi manyamānaḥ||51||",
    "917:205": "snehācca bhāvaṃ tanayasya buddhvā",
    "917:206": "sa rāgadoṣānavicintya kāṃścit|",
    "917:207": "yogyāḥ samājñāpayati sma tatra",
    "917:208": "kalāsvabhijñā iti vāramukhyāḥ||52||",
    "917:209": "tato viśeṣeṇa narendramārge",
    "917:210": "svalaṃkṛte caiva parīkṣite ca|",
    "917:211": "vyatyasya sūtaṃ ca rathaṃ ca rājā",
    "917:212": "prasthāpayāmāsa bahiḥ kumāram||53||",
    "917:213": "tatastathā gacchati rājaputre",
    "917:214": "taireva devairvihito gatāsuḥ|",
    "917:215": "taṃ caiva mārge mṛtamuhyamānaṃ",
    "917:216": "sūtaḥ kumāraśca dadarśa nānyaḥ||54||",
    "917:217": "athabravīdrājasutaḥ sa sūtaṃ",
    "917:218": "naraiścaturbhihriyate ka eṣaḥ|",
    "917:219": "dīnairmanuṣyairanugamyamāno",
    "917:220": "yo bhūṣitaścāpyavarudyate ca||55||",
    "917:221": "tataḥ sa śudhdātmabhireva devaiḥ",
    "917:222": "śuddhādhivāsairabhibhūtacetāḥ|",
    "917:223": "avācyamapyathīmimaṃ niyantā",
    "917:224": "pravyājahārārthavadīśvarāya||56||",
    "917:225": "buddhīndriyaprāṇaguṇairviyuktaḥ",
    "917:226": "supto visaṃjñastṛṇakāṣṭhabhūtaḥ|",
    "917:227": "saṃvardhya saṃrakṣya ca yatnavadbhiḥ",
    "917:228": "priyapriyaistyajyata eṣa ko'pi||57||",
    "917:229": "iti praṇetuḥ sa niśamya vākyaṃ",
    "917:230": "saṃcukṣubhe kiṃciduvāca cainam|",
    "917:231": "kiṃ kevalo'syaiva janasya dharmaḥ",
    "917:232": "sarvaprajānāmayamīdṛśo'ntaḥ||58||",
    "917:233": "tataḥ praṇetā vadati sma tasmai",
    "917:234": "sarvaprajānāmidamantakarma|",
    "917:235": "hīnasya madhyasya mahātmano vā",
    "917:236": "sarvasya loke niyato vināśaḥ||59||",
    "917:237": "tataḥ sa dhīro'pi narendrasūnuḥ",
    "917:238": "śrutvaiva mṛtyuṃ viṣasāda sadyaḥ|",
    "917:239": "aṃsena saṃśliṣya ca kūbarāgraṃ",
    "917:240": "provāca nihrādavatā svareṇa||60||",
    "917:241": "iyaṃ ca niṣṭhā niyatā prajānāṃ",
    "917:242": "pramādyati tyaktabhayaśca lokaḥ|",
    "917:243": "manāṃsi śaṅke kaṭhināni nṝṇāṃ",
    "917:244": "svasthāstathā hyadhvani vartamānāḥ||61||",
    "917:245": "tasmādrathaḥ sūta nivartyatā no",
    "917:246": "vihārabhūmerna hi deśakālaḥ|",
    "917:247": "jānanvināśaṃ kathamartikāle",
    "917:248": "sacetanaḥ syādiha hi pramattaḥ||62||",
    "917:249": "iti bruvāṇe'pi narādhipātmaje",
    "917:250": "nivartayāmāsa sa naiva taṃ ratham|",
    "917:251": "viśeṣayuktaṃ tu narendraśāsanā-",
    "917:252": "tsa padmaṣaṇḍaṃ vanameva niryayau||63||",
    "917:253": "tataḥ śivaṃ kusumitabālapādapaṃ",
    "917:254": "paribhramatpramuditamattakokilam|",
    "917:255": "vimānavatsa kamalacārudīrghikaṃ",
    "917:256": "dadarśa tadvanamiva nandanaṃ vanam||64||",
    "917:257": "varāṅganāgaṇakalilaṃ nṛpātmaja-",
    "917:258": "stato balādvanamatinīyate sma tat|",
    "917:259": "varāpsarovṛtamalakādhipālayaṃ",
    "917:260": "navavrato muniriva vighnakātaraḥ||65||",
    "917:261": "iti buddhacarite mahākāvye",
    "917:262": "saṃvegotpattirnāma tṛtīyaḥ sargaḥ||3||"
}