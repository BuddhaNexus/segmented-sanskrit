{
    "1346:0": "saptamo'dhikāraḥ",
    "1346:1": "prabhāvalakṣaṇavibhāge ślokaḥ |",
    "1346:2": "utpattivāk cittaśubhāśubhādhi tatsthānaniḥsārapadā parokṣam|",
    "1346:3": "jñānaṃ hi sarvatragasaprabhedeṣvavyāhataṃ dhīragataḥ prabhāvaḥ||1||",
    "1346:4": "dhyānaṃ caturthaṃ suviśuddhametya niṣkalpanājñānaparigraheṇa|",
    "1346:5": "yathāvyavasthānamanaskriyātaḥ prabhāvasiddhiṃ paramāṃ paraiti||2||",
    "1346:6": "yenāryadivyāpratimairvihārai-",
    "1346:7": "rbrāhmaiśca nityaṃ viharatyudāraiḥ|",
    "1346:8": "buddhāṃśca sattvāṃśca sa dikṣu gatvā",
    "1346:9": "saṃmānayatyānayate viśuddhim||3||",
    "1346:10": "māyopamānpaśyati lokadhātūnsarvānsasattvānsavivartanāśān|",
    "1346:11": "saṃdarśayatyeva ca tānyatheṣṭaṃ vaśī vicitrairapi sa prakāraiḥ||4||",
    "1346:12": "raśmipramokṣairbhṛśaduḥkhitāṃśca",
    "1346:13": "āpāyikānsvargagatānkaroti|",
    "1346:14": "mārānvayān kṣubdhavimānaśobhān",
    "1346:15": "saṃkampayaṃsrāsayate samārān||5||",
    "1346:16": "samādhivikrīḍitamaprameyaṃ saṃdarśayatyagragaṇasyamadhye |",
    "1346:17": "sakarmajanmottamanirmitaiśca sattvārthamātiṣṭhati sarvakālam || 6 ||",
    "1346:18": "jñānavaśitvātsamupaiti śuddhiṃ",
    "1346:19": "kṣetraṃ yathākāmanidarśanāya",
    "1346:20": "abuddhanāmeṣu[?",
    "1346:21": "] ca buddhanāma",
    "1346:22": "saṃśrāvaṇāttānkṣipate 'nyadhātau||7||",
    "1346:23": "śakto bhavatyeva ca satvapāke",
    "1346:24": "saṃjātapakṣaḥ śakuniryathaiva|",
    "1346:25": "buddhātpraśaṃsāṃ labhate 'timātrā-",
    "1346:26": "mādeyavākyo bhavati prajānām||8||",
    "1346:27": "ṣaḍdhāpyabhijñā trividhā ca vidyā",
    "1346:28": "aṣṭau vimokṣā 'bhibhuvastathā'ṣṭau|",
    "1346:29": "daśāpi kṛtsnāyatanānyameyāḥ",
    "1346:30": "samādhayo dhīragataḥ prabhāvaḥ||9||",
    "1346:31": "sa hi paramavaśitvalabdhabuddhirjagadavaśaṃ svavaśe vidhāya nityam|",
    "1346:32": "parahitakaraṇaikatābhirāmaścarati bhaveṣu hi siṃhavatsudhīraḥ||10||",
    "1346:33": "|| prabhāvādhikāraḥ mahāyānasūtrālaṃkāre saptamaḥ||"
}