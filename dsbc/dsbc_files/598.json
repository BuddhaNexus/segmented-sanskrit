{
    "598:0": "7",
    "598:1": "75. jātyandhakoṭiniyutānyaviunāyakānāṃ",
    "598:2": "mārge akovidu kuto nagarapraveśe|",
    "598:3": "vina prajña pañca imi pāramitā acakṣuḥ",
    "598:4": "avināyakā na prabhavanti spṛśetu bodhim||1||",
    "598:5": "76. yatrāntarasmi bhavate pragṛhīta prajñā",
    "598:6": "tatu labdhacakṣu bhavatī imu nāmadheyam|",
    "598:7": "yatha citrakarmapariniṣṭhita cakṣuhīno",
    "598:8": "na ca tāva puṇyu labhate akaritva cakṣuḥ||2||",
    "598:9": "77. yada dharma saṃskṛta asaṃskṛta kṛṣṇaśuklo",
    "598:10": "aṇumātru no labhati prajña vibhāvamānaḥ|",
    "598:11": "yada prajñapāramita gacchati saṃkhya loke",
    "598:12": "ākāśa yatra na pratiṣṭhitu kiṃci tatra||3||",
    "598:13": "78. saci manyate ahu carāmi jināna prajñāṃ",
    "598:14": "mociṣya sattvaniyutāṃ bahurogaspṛṣṭān|",
    "598:15": "ayu sattvasaṃjñaparikalpaku bodhisattvo",
    "598:16": "na ca eṣa prajñavarapāramitāya caryā||4||",
    "598:17": "79. yo bodhisattva varapāramiteti cīrṇo",
    "598:18": "paricārikā ya na ca kāṅkṣati paṇḍitehi|",
    "598:19": "saha śrutva tasya puna bheṣyati śāstṛsaṃjñā",
    "598:20": "so vā laghū anubudhiṣyati bodhi śāntām||5||",
    "598:21": "80. satkṛtya buddhaniyutāṃ paricārikāyāṃ",
    "598:22": "na ca prajñapāramita śraddadhitā jinānām|",
    "598:23": "śrutvā ca so imu kṣipiṣyati so'lpabuddhiḥ",
    "598:24": "sa kṣipitva yāsyati avīcimatrāṇabhūto||6||",
    "598:25": "81. tasmā hu śraddadhata eva jināna mātāṃ",
    "598:26": "yadi icchathā spṛśitu uttamabuddhajñānam|",
    "598:27": "so vāṇijo yatha vrajitvana ratnadvīpaṃ",
    "598:28": "mūlātu chedana karitva puna āgameyā||7||",
    "598:29": "bhagavatyāṃ ratnaguṇasaṃcayagāthāyāṃ nirayaparivarto nāma saptamaḥ||"
}