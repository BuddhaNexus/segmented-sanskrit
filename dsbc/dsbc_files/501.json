{
    "501:0": "pūrvayogaparivartaḥ",
    "501:1": "smarāmi pūrvaṃ caramāṇu cārikāṃ",
    "501:2": "siṃhadhvajasya sugatasya śāsane |",
    "501:3": "abhūṣi bhikṣu vidu dharmabhāṇako",
    "501:4": "nāmena so ucyati brahmadattaḥ || 1 ||",
    "501:5": "ahaṃ tadāsīnmati rājaputro",
    "501:6": "ābādhiko bāḍha gilāna duḥkhitaḥ |",
    "501:7": "mahyaṃ ca si ācariyo abhūṣi",
    "501:8": "yo brahmadattastada dharmabhāṇakaḥ || 2 ||",
    "501:9": "pañcottarā vaidyaśatā anūnakā",
    "501:10": "vyādhiṃ cikitsanti udyuktamānasāḥ |",
    "501:11": "vyādhiṃ na śaknanti mama cikitsituṃ",
    "501:12": "sarve mama jñātaya āsi duḥkhitāḥ || 3 ||",
    "501:13": "śrutvā ca gailānyu sa mahya bhikṣu",
    "501:14": "gilānapṛccho mama antikāgataḥ |",
    "501:15": "kṛpāṃ janetvā mama brahmadatto",
    "501:16": "imaṃ samādhiṃ varu tatra deśayī || 4 ||",
    "501:17": "tasya mamā etu samādhi śrutvā",
    "501:18": "utpanna prīti ariyā nirāmiṣā |",
    "501:19": "svabhāvu dharmāṇa prajānamāno",
    "501:20": "ucchvāsi vyādhī tuhu tasmi kāle || 5 ||",
    "501:21": "dīpaṃkaraḥ so caramāṇu cārikā-",
    "501:22": "mabhūṣi bhikṣurvidu dharmabhāṇakaḥ |",
    "501:23": "ahaṃ ca āsīnmatirājaputraḥ",
    "501:24": "samādhijñānena hu vyādhi mocitaḥ || 6 ||",
    "501:25": "tasmāt kumārā bahu paścakāle",
    "501:26": "anusmaranto imu pārihāṇim |",
    "501:27": "sahesi bālāna durukta vākyaṃ",
    "501:28": "dhārentu vācentu imaṃ samādhim || 7 ||",
    "501:29": "bheṣyanti bhikṣu bahu paścakāle",
    "501:30": "lubdhāśca duṣṭāśca asaṃyatāśca |",
    "501:31": "pāpeccha adhyoṣita pātracīvare",
    "501:32": "pratikṣipiṣyanti imaṃ samādhim || 8 ||",
    "501:33": "īrṣyālukā uddhata prākaṭendriyāḥ",
    "501:34": "kuleṣu cādhyoṣita lābhakāmāḥ |",
    "501:35": "prāyogike saṃstavi nitya saṃśritāḥ",
    "501:36": "pratikṣipiṣyanti imaṃ samādhim || 9 ||",
    "501:37": "hastāṃśca pādāṃśca tatha vidyamānā",
    "501:38": "hāsye ca lāsye ca sadā prayuktāḥ |",
    "501:39": "parasparaṃ kaṇṭhita śliṣyamāṇā",
    "501:40": "grāmeṣu caryāpathi anyu bheṣyati || 10 ||",
    "501:41": "ayuktayogānimi bhonti lakṣaṇāḥ",
    "501:42": "parakumārīṣu ca nitya dhyoṣitāḥ |",
    "501:43": "rūpeṇa raktā grathitā bhavanti",
    "501:44": "hiṇḍanti grāmānnigamāṃśca rāṣṭrān || 11 ||",
    "501:45": "te khādyapeyasmi sadā prayuktā",
    "501:46": "nāṭye ya gīte ca tathaiva vādite |",
    "501:47": "krayavikraye co sada bhonti utsukāḥ",
    "501:48": "pāne'pi cādhyoṣita naṣṭalajjāḥ || 12 ||",
    "501:49": "lekhāna piṣyanti ayuktayogāḥ",
    "501:50": "śīlaṃ tatheryāpathu chorayitvā |",
    "501:51": "maryāda bhinditva gṛhībhi sārdhaṃ",
    "501:52": "te bhinnavṛttā vitathapratiṣṭhitāḥ || 13 ||",
    "501:53": "ye karma buddhehi sadā vivarjitā-",
    "501:54": "stulamānakūṭe ca sadā prayuktāḥ |",
    "501:55": "tatkarma kṛtvāna kiliṣṭapāpakān",
    "501:56": "apāyu yāsyanti nihīnakarmāḥ || 14 ||",
    "501:57": "prabhūtavittaṃ maṇihemaśaṃkhaṃ",
    "501:58": "gṛhāṃśca jñātīṃśca vihāya pravraji |",
    "501:59": "te pravrajitvāniha buddhaśāsane",
    "501:60": "pāpāni karmāṇi sadācaranti || 15 ||",
    "501:61": "dhane ca dhānye ca te sārasaṃjñino",
    "501:62": "dhenūśca gāvaḥ śakaṭāni sajjayī |",
    "501:63": "kimartha tehi ima keśa choritā",
    "501:64": "śikṣāya yeṣāṃ pratipatti nāsti || 16 ||",
    "501:65": "mayā ca pūrve cariyāṃ caritvā",
    "501:66": "suduṣkaraṃ kalpasahasra cīrṇam |",
    "501:67": "ayaṃ ca me śānta samādhireṣito",
    "501:68": "yatteṣa śrutvā tada hāsyu bheṣyati || 17 ||",
    "501:69": "ciraṃ mṛṣāvādi abrahmacāriṇo",
    "501:70": "apāyanimnāḥ sada kāmalābhāḥ |",
    "501:71": "te brahmacārīṇa dhvajaṃ gṛhītvā",
    "501:72": "duḥśīla vakṣyanti na eṣa dharmaḥ || 18 ||",
    "501:73": "bhedāya sthāsyanti ca te parasparaṃ",
    "501:74": "ayuktibhirlābha gaveṣamāṇāḥ |",
    "501:75": "avarṇa bhāṣitva ta anyamanyaṃ",
    "501:76": "cyutā gamipyanti apāyabhūmim || 19 ||",
    "501:77": "śataḥsahasreṣu sudurlabhāste",
    "501:78": "kṣāntībalaṃ yeṣu tadā bhaviṣyati |",
    "501:79": "ato bahū ye kalahasmi utsukāḥ",
    "501:80": "prapañca kāhinti jahitva kṣāntim || 20 ||",
    "501:81": "vakṣyanti vācā vaya bodhisattvāḥ",
    "501:82": "śabdo'pi teṣāṃ vraji deśadeśe |",
    "501:83": "abhūtaśabdena madena mattā",
    "501:84": "vipannaśīlāna kuto'sti bodhiḥ || 21 ||",
    "501:85": "na me śrutaṃ nāpi kadāci dṛṣṭa-",
    "501:86": "madhyāśayo yasya viśuddha nāsti |",
    "501:87": "imeṣu dharmeṣu ca nāsti kṣāntiḥ",
    "501:88": "sa lapsyate bodhi kṣipitva dharmān || 22 ||",
    "501:89": "bhītāśca trastāśca gṛhaṃ tyajanti",
    "501:90": "te pravraji dṛḍhatarā bhavanti |",
    "501:91": "viśeṣakāmā vilayaṃ prayānti",
    "501:92": "kṣipitva yānaṃ puruṣottamānām || 23 ||",
    "501:93": "nihīnaprajñā guṇaviprahīnā",
    "501:94": "vakṣyanti doṣaṃ sada agrayāne |",
    "501:95": "yasmai ca te taccharaṇaṃ prapannā-",
    "501:96": "statraiva ye doṣaśatān vadanti || 24 ||",
    "501:97": "ājīvakā ye bahu pravrajitvā",
    "501:98": "anarthikāḥ sarvasubuddhabodhaye |",
    "501:99": "te ātmadṛṣṭīya sthihitva bālā",
    "501:100": "uttrasta bheṣyanti śruṇitva śūnyatām || 25 ||",
    "501:101": "vihāru kṛtvāna ta anyamanyaṃ",
    "501:102": "vyāpādadoṣāṃśca khilaṃ janetvā |",
    "501:103": "abhyākhya datvā ca paraspareṇa",
    "501:104": "lapsyanti prāmodya karitva pāpakam || 26 ||",
    "501:105": "yaḥ śīlavanto guṇavantu bheṣyati",
    "501:106": "maitrīvihārī sada kṣāntikovidaḥ |",
    "501:107": "susaṃvṛto mārdavasūrataśca",
    "501:108": "paribhūta so bheṣyati tasmi kāle || 27 ||",
    "501:109": "yo kho punarbheṣyati duṣṭacittaḥ",
    "501:110": "sudāruṇo raudrātihīnakarmā |",
    "501:111": "adharmacārī kalahe rataśca",
    "501:112": "sa pūjito bheṣyati tasmi kāle || 28 ||",
    "501:113": "ārocayāmi prativedayāmi",
    "501:114": "sacet kumārā mama śraddha gacchasi |",
    "501:115": "imāṃ smaritvā sugatānuśāsanīṃ",
    "501:116": "mā jātu viśvastu bhavesi teṣām || 29 ||",
    "501:117": "te tīvrarāgāstatha tīvradoṣā-",
    "501:118": "ste tīvramohāḥ sada mānamattāḥ |",
    "501:119": "adāntakāyāśca adāntavācaḥ",
    "501:120": "adāntacittāśca apāyanimnāḥ || 30 ||",
    "501:121": "ahaṃ ca bhāṣeyya guṇāna varṇān",
    "501:122": "na co guṇān bhikṣu samācareyyā |",
    "501:123": "na ghoṣamātreṇa ca bodhi labhyate",
    "501:124": "pratipattisārāṇa na bodhi durlabhā || 31 ||",
    "501:125": "iti śrīsamādhirāje pūrvayogaparivarto nāma ṣoḍaśaḥ || 16 ||"
}