{
  "SA08n972:0": "(13) karmavargaḥ",
  "SA08n972:1": "śubhāśubhakarmaṇāṃ phalabhogaḥ",
  "SA08n972:2": "śubhānāmaśubhānāṃ ca karmaṇāṃ phalaniścayaḥ |",
  "SA08n972:3": "bhujyate sukṛtaṃ sarva karmabaddhā hi dehinaḥ ||1 ||",
  "SA08n972:4": "(yadaṅgī)kriyate karma tatkṛdbhiranubhūyate |",
  "SA08n972:5": "cittamānena mūḍhena tṛṣṇānagaravāsinā ||2 ||",
  "SA08n972:6": "svayameva phalaṃ bhuṅkte",
  "SA08n972:7": "sahāyairbahubhiḥ sārdha kurute karma duṣkṛtam |",
  "SA08n972:8": "ekākī karmaṇastasya phalaṃ bhuṅkte bhave bhave ||3 ||",
  "SA08n972:9": "karmaṇāmavisaṃyogaḥ sarvaiḥ svajanabāndhavaiḥ |",
  "SA08n972:10": "śubhāśubhaṃ paraṃ loke gacchantamanugacchati ||4 ||",
  "SA08n972:11": "yatra prayānti puṇyāni gandhastatrānudhāvati |",
  "SA08n972:12": "tathā śubhāśubhaṃ karma gacchantamanugacchati |",
  "SA08n972:13": "svakarmaphaladāyādā prāṇena karmayojinaḥ ||5 ||",
  "SA08n972:14": "sukṛtaiḥ suralokaṃ gacchanti",
  "SA08n972:15": "sukṛtaiḥ suralokeṣu duṣkṛtaiśca tathāpyadhaḥ |",
  "SA08n972:16": "yadduḥkhaṃ karmaphalajaṃ jāyate kaṭukodayam ||6 ||",
  "SA08n972:17": "tasyopamānamasuraṃ triṣu dhātuṣu jāyate |",
  "SA08n972:18": "tridoṣajaṃ tricittotthaṃ triṣu dhātuṣu pacyate ||7 ||",
  "SA08n972:19": "tasya karmavipākasya triṣu dhātuṣu lakṣyate |",
  "SA08n972:20": "hetupratyayasāmagrīsamutthaṃ ca prameva tat ||8 ||",
  "SA08n972:21": "anyakṛtakarmaṇaḥ phalaṃ nānyo bhuṅkte",
  "SA08n972:22": "na hyanyena kṛtaṃ pāpamanyena paripacyate |",
  "SA08n972:23": "sukarmaphaladāyādaḥ prāṇināṃ sarva eva hi ||9 ||",
  "SA08n972:24": "pūrvoktānāṃ trividhānāṃ svasya kṛta eva vipāko bhavati",
  "SA08n972:25": "karmaṇastrividhasyāsya na cāpyanyasya pacyate |",
  "SA08n972:26": "catvāriṃśadvipākasya ghoraṃ bhavati ceṣṭitam ||10 ||",
  "SA08n972:27": "karmaphalavarṇanam",
  "SA08n972:28": "ekaḥ karoti karmāṇi ekaśca phalamaśnute |",
  "SA08n972:29": "ekastarati durgāṇi sahāyo jāyate'paraḥ ||11 ||",
  "SA08n972:30": "jalāpekṣī jano yastu kurute karma duṣkṛtam |",
  "SA08n972:31": "na jano janaśatānāṃ bhuṅkte hi vyañjanaṃ (kvacit) ||12 ||",
  "SA08n972:32": "na hyanyena kṛtaṃ karma saṅkrāmatyaparasya tat |",
  "SA08n972:33": "na manye'nādinidhanamasmiṃlloke na cāparaiḥ ||13 ||",
  "SA08n972:34": "duḥkhāsvādaṃ sukhodbhūtaṃ yena duścaritaṃ kṛtam |",
  "SA08n972:35": "tena carati saṃsāre prerite karmavāyunā ||14 ||",
  "SA08n972:36": "kasya dharmo vardhate?",
  "SA08n972:37": "anapekṣitatattvasya vyākulīkṛtacetasaḥ |",
  "SA08n972:38": "vardhate sakalo (dharmaḥ)",
  "SA08n972:39": "dharmāvṛtamanoharaḥ ||15 ||",
  "SA08n972:40": "ke narakaṃ gacchanti?",
  "SA08n972:41": "manasā vañcitāḥ sattvā manasā vipramohitāḥ |",
  "SA08n972:42": "gacchanti narakaṃ pāpāstamastamaparāyaṇāḥ ||16 ||",
  "SA08n972:43": "tamovṛte hi saṃsāre durlabhaṃ buddhaśāsanam |",
  "SA08n972:44": "duḥkhād duḥkhataraṃ yānti yebhyaḥ dharmo na rocate ||17 ||",
  "SA08n972:45": "anādimati saṃsāre karmajālāvṛtā prajā |",
  "SA08n972:46": "jāyate bhriyate cai(va)",
  "SA08n972:47": "svakarmaphalahetunā ||18 ||",
  "SA08n972:48": "jāyante narake devā nārakeyāstathāvidhāḥ |",
  "SA08n972:49": "manuṣyāḥ pretaviṣaye narakaṃ vā prayānti hi ||19 ||",
  "SA08n972:50": "sukarmaṇaiva sukham",
  "SA08n972:51": "anyonyaprabhavaṃ dṛṣṭaṃ duḥkhaṃ vā yadi vā sukham |",
  "SA08n972:52": "kleśadharmodbhave janmanyaparādikṛtaṃ ca tat ||20 ||",
  "SA08n972:53": "asaṅkhyeyakṛtaṃ karma saṃsāre prāṇibhiḥ sadā |",
  "SA08n972:54": "tatra śakyaṃ budhairgantuṃ varjayitvā tathāgataiḥ ||21 ||",
  "SA08n972:55": "nādharmasya phalaṃ sādhu viparītaṃ na pacyate |",
  "SA08n972:56": "hetoḥ sadṛśatā dṛṣṭā jalasya vividhasya vai ||22 ||",
  "SA08n972:57": "sādṛśyasya hetuphalaṃ viparītaṃ na jātu hi |",
  "SA08n972:58": "saṃskṛtānāmarūpāṇāṃ hetuḥ pratyayasambhavaḥ ||23 ||",
  "SA08n972:59": "sahetukaṃ sarva karmaphalam",
  "SA08n972:60": "nāhetukaṃ phalaṃ dṛṣṭaṃ narake tu viśeṣataḥ |",
  "SA08n972:61": "hetusaṅghātasaṃsaktaṃ narakeṣu vipacyate ||24 ||",
  "SA08n972:62": "kṛtoparatagāḍhānāṃ niyataṃ pāpagāminām |",
  "SA08n972:63": "karmaṇā phalasambandho narakeṣu vipacyate ||25 ||",
  "SA08n972:64": "deśānāṃ prati kālaṃ tu yat karma (vi)nivartate |",
  "SA08n972:65": "tasya neṣṭaṃ phalaṃ dṛṣṭaṃ tattvamārgavidarśakaiḥ ||26 ||",
  "SA08n972:66": "udāharaṇapradarśanapūrvakaṃ phalasya karmādhīnatvameveti",
  "SA08n972:67": "dīpādhīnā prabhā yadvat karmādhīnaṃ phalaṃ tathā |",
  "SA08n972:68": "anyo'nyaphalasambhūtaḥ saṃskṛtaḥ sarva eva hi ||27 ||",
  "SA08n972:69": "pratītyasamutpādasamarthanam",
  "SA08n972:70": "anyonyahetukā dṛṣṭā hyanyonyavaśavartinaḥ |",
  "SA08n972:71": "sādṛśyasyānubandhena dṛśyante tattvadarśakaiḥ ||28 ||",
  "SA08n972:72": "nāhetuphalasandhānamīśvarādibhirāsthitam |",
  "SA08n972:73": "bhavanti saṃskṛtā dharmā deśitāstattvadarśibhiḥ ||29 ||",
  "SA08n972:74": "anādimatisaṃsāre hetupratyayasambhave |",
  "SA08n972:75": "sādṛśyaṃ karmaṇā dṛṣṭaṃ viparītaṃ na kalpyate ||30 ||",
  "SA08n972:76": "buddhasya svarūpam",
  "SA08n972:77": "tatstheṣu karmavaśagāḥ prāṇinaḥ karmahetujāḥ |",
  "SA08n972:78": "sa karmaphalatattvajño (buddha)",
  "SA08n972:79": "ityabhidhīyate ||31 ||",
  "SA08n972:80": "keṣāṃ śāntiḥ na vidyate?",
  "SA08n972:81": "mārgāmārgaviruddhā ye mūḍhā buddhasya śāsane |",
  "SA08n972:82": "(na) teṣāṃ vidyate śāntirādityasya tamo yathā ||32 ||",
  "SA08n972:83": "karmāyattaṃ sukham",
  "SA08n972:84": "karmāyattaṃ sukhaṃ dṛṣṭaṃ sukhāyattaṃ manastathā |",
  "SA08n972:85": "mano'vaboddhayā(ste)",
  "SA08n972:86": "dharmā ye vyutpattivicāriṇaḥ ||33 ||",
  "SA08n972:87": "sucaritasya karmaṇaḥ phalam",
  "SA08n972:88": "anityāḥ sarvasaṃskārā jalabud budasannibhāḥ |",
  "SA08n972:89": "tasmāt sucaritaṃ karma loke martya paratra ca ||34 ||",
  "SA08n972:90": "dṛṣṭaṃ karmaphalaṃ loke dṛṣṭā eva vicitratā |",
  "SA08n972:91": "yaḥ pramādaparaḥ puṃsāstasyātmā dhruvamapriyaḥ ||35 ||",
  "SA08n972:92": "karmarajjvātidṛḍhayā duṣpramokṣasugāḍhayā |",
  "SA08n972:93": "baddhā bālā na gacchanti nirvāṇapuramuttamam ||36 ||",
  "SA08n972:94": " ||iti karmavargastrayodaśaḥ ||"
}