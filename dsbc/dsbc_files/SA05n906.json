{
  "SA05n906:0": "vajravilāsinīsādhanāstavaḥ",
  "SA05n906:1": "ravivikasvarabhāsvarasundarī-",
  "SA05n906:2": "prabalakeśarasaṃvarakarṇikāt |",
  "SA05n906:3": "udayamastakaśṛṅgasamullasa-",
  "SA05n906:4": "nnavasupūrṇaśaśāṅkakarāṅkitām || 1 ||",
  "SA05n906:5": "vividhapuṣparasāsavavedyapi",
  "SA05n906:6": "drutavilambitamadhyanadaddhvaniḥ |",
  "SA05n906:7": "alirupetya niśārdhamahotsave",
  "SA05n906:8": "dhayati tadgatadhīriti vismayaḥ || 2 ||",
  "SA05n906:9": "udayate'stamupaiti niśākaraḥ",
  "SA05n906:10": "punarato'pyudayācalamaulitām |",
  "SA05n906:11": "ubhayakoṭikalāpinirīkṣaṇe",
  "SA05n906:12": "na ca śaśī na vibhāti divākaraḥ || 3 ||",
  "SA05n906:13": "ravirudeti sarojadalāntare",
  "SA05n906:14": "śikharato'pi vidhuḥ pravilīyate |",
  "SA05n906:15": "vrajati cordhvamasau vaḍavānalo",
  "SA05n906:16": "gilati rāhuradhaḥ śaśibhāskarau || 4 ||",
  "SA05n906:17": "kamalinīkamalāsanalocana-",
  "SA05n906:18": "prakaṭagocaragocaramīlanam |",
  "SA05n906:19": "prathamamaṅgamidaṃ kuliśāmbuja-",
  "SA05n906:20": "dvayanimīlanamatra tato'param || 5 ||",
  "SA05n906:21": "sapadi sādhakabījanigharṣaṇāt",
  "SA05n906:22": "tritayamambarameti caturthakam |",
  "SA05n906:23": "sahajamakṣayadhāmakalāvalī-",
  "SA05n906:24": "kalitakālavilāpanaleliham || 6 ||",
  "SA05n906:25": "yadi suśikṣitavajravilāsinīgurumukhādhigamo'dhigato bhavet |",
  "SA05n906:26": "bhavati yasya tadottamamadhyamādhamaviniścayameti sa tattvadṛk || 7 ||",
  "SA05n906:27": "śrīvajravilāsinīsādhanāstavaḥ samāptaḥ |"
}