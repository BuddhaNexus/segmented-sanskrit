{
    "926:0": "CANTO XII",
    "926:1": "tataḥ śamavihārasya",
    "926:2": "munerikṣvākucandramāḥ|",
    "926:3": "arāḍasyāśramaṃ bheje",
    "926:4": "vapuṣā pūrayanniva||1||",
    "926:5": "sa kālāmasagotreṇa",
    "926:6": "tenālokyaiva dūrataḥ|",
    "926:7": "uccaiḥ svāgatamityuktaḥ",
    "926:8": "samīpamupajagmivān||2||",
    "926:9": "tāvubhau nyāyataḥ pṛṣṭvā",
    "926:10": "dhātusāmyaṃ parasparam|",
    "926:11": "dāravyormedhyayorvṛṣyoḥ",
    "926:12": "śucau deśe niṣedatuḥ||3||",
    "926:13": "tamāsīnaṃ nṛpasutaṃ",
    "926:14": "so'bravīnmunisattamaḥ|",
    "926:15": "bahumānaviśālābhyāṃ",
    "926:16": "darśanābhyāṃ pibanniva||4||",
    "926:17": "viditaṃ me yathā saumya",
    "926:18": "niṣkrānto bhavanādasi|",
    "926:19": "chittvā snehamayaṃ pāśaṃ",
    "926:20": "pāśaṃ dṛpta iva dvipaḥ||5||",
    "926:21": "sarvathā dhṛtimaccaiva",
    "926:22": "prājñaṃ caiva manastava|",
    "926:23": "yastvaṃ prāptaḥ śriyaṃ tyaktvā",
    "926:24": "latāṃ viṣaphalāmiva||6||",
    "926:25": "nāścarya jīrṇavayaso",
    "926:26": "yajjagmuḥ pārthivā vanam|",
    "926:27": "apatyebhyaḥ śriyaṃ dattvā",
    "926:28": "bhuktocchiṣṭāmiva srajam||7||",
    "926:29": "idaṃ me matamāścaryaṃ",
    "926:30": "nave vayasi yadbhavān|",
    "926:31": "abhuktvaiva śriyaṃ prāptaḥ",
    "926:32": "sthito viṣayagocare||8||",
    "926:33": "tadvijñātumimaṃ dharma",
    "926:34": "paramaṃ bhājanaṃ bhavān|",
    "926:35": "jñānaplamavadhiṣṭhāya",
    "926:36": "śīghraṃ duḥkhārṇavaṃ tara||9||",
    "926:37": "śiṣye yadyapi vijñāte",
    "926:38": "śāstraṃ kālena varṇyate|",
    "926:39": "gāmbhīryādvyavasāyācca",
    "926:40": "na parīkṣyo bhavānmama||10||",
    "926:41": "iti vākyamarāḍasya",
    "926:42": "vijñāya sa nararṣabhaḥ|",
    "926:43": "babhūva paramaprītaḥ",
    "926:44": "provācottarameva ca||11||",
    "926:45": "viraktasyāpi yadidaṃ",
    "926:46": "saumukhyaṃ bhavataḥ param|",
    "926:47": "akṛtārtho'pyanenāsmi",
    "926:48": "kṛtārtha iva saṃprati||12||",
    "926:49": "didṛkṣuriva hi jyoti-",
    "926:50": "ryiyāsuriva daiśikam|",
    "926:51": "tvaddarśanamahaṃ manye",
    "926:52": "titīrṣuriva ca plavam||13||",
    "926:53": "tasmādarhasi tadvaktuṃ",
    "926:54": "vaktavyaṃ yadi manyase|",
    "926:55": "jarāmaraṇarogebhyo",
    "926:56": "yathāyaṃ parimucyate||14||",
    "926:57": "ityarāḍaḥ kumārasya",
    "926:58": "māhātmyādeva coditaḥ|",
    "926:59": "saṃkṣiptaṃ kathayāṃcakre",
    "926:60": "svasya śāstrasya niścayam||15||",
    "926:61": "śrūyatāmayamasmākaṃ",
    "926:62": "siddhāntaḥ śṛṇvatāṃ vara|",
    "926:63": "yathā bhavati saṃsāro",
    "926:64": "yathā caiva nivartate||16||",
    "926:65": "prakṛtiśca vikāraśca",
    "926:66": "janma mṛtyurjareva ca|",
    "926:67": "tattāvatsattvamituktaṃ",
    "926:68": "sthirasattva parehi tat||17||",
    "926:69": "tatra tu prakṛtiṃ nāma",
    "926:70": "viddhiṃ prakṛtikovida|",
    "926:71": "pañca bhūtānyahaṃkāraṃ",
    "926:72": "buddhimavyaktameva ca||18||",
    "926:73": "vikāra iti budhyasva",
    "926:74": "viṣayānindriyāṇi ca|",
    "926:75": "pāṇipādaṃ ca vādaṃ ca",
    "926:76": "pāyūpasthaṃ tathā manaḥ||19||",
    "926:77": "asya kṣetrasya vijñānā-",
    "926:78": "tkṣetrajña iti saṃjñi ca|",
    "926:79": "kṣetrajña iti cātmānaṃ",
    "926:80": "kathayantyātmacintakāḥ||20||",
    "926:81": "saśiṣyaḥ kapilaśceha",
    "926:82": "pratibuddha iti smṛtiḥ|",
    "926:83": "saputro'pratibuddhastu",
    "926:84": "prajāpatirihocyate||21||",
    "926:85": "jāyate jīryate caiva",
    "926:86": "bādhyate mriyate ca yat|",
    "926:87": "tadvyaktamiti vijñeya-",
    "926:88": "mavyaktaṃ tu viparyayāt||22||",
    "926:89": "ajñānaṃ karma tṛṣṇā ca",
    "926:90": "jñeyāḥ saṃsārahetavaḥ|",
    "926:91": "sthito'smiṃstritaye jantu-",
    "926:92": "statsattvaṃ nātivartate||23||",
    "926:93": "vipratyayādahaṃkārā-",
    "926:94": "tsaṃdehādabhisaṃplavāt|",
    "926:95": "aviśeṣānupāyābhyāṃ",
    "926:96": "saṅgādabhyavapātataḥ||24||",
    "926:97": "tatra vipratyayo nāma",
    "926:98": "viparītaṃ pravartate|",
    "926:99": "anyathā kurute kāryaṃ",
    "926:100": "mantavyaṃ manyate'nyathā||25||",
    "926:101": "bravīmyahamahaṃ vedmi",
    "926:102": "gacchāmyahamahaṃ sthitaḥ|",
    "926:103": "itīhaivamahaṃkāra-",
    "926:104": "stvanahaṃkāra vartate||26||",
    "926:105": "yastu bhāvānasaṃdigdhā-",
    "926:106": "nekībhāvena paśyati|",
    "926:107": "mṛtpiṇḍavadasaṃdeha",
    "926:108": "saṃdehaḥ sa ihocyate||27||",
    "926:109": "ya evāhaṃ sa evedaṃ",
    "926:110": "mano buddhiśca karma ca|",
    "926:111": "yaścaivaiṣa gaṇaḥ so'ha-",
    "926:112": "miti yaḥ so'bhisaṃplavaḥ||28||",
    "926:113": "aviśeṣaṃ viśeṣajña",
    "926:114": "pratibuddhāprabuddhayoḥ|",
    "926:115": "prakṛtīnāṃ ca yo veda",
    "926:116": "so'viśeṣa iti smṛtaḥ||29||",
    "926:117": "namaskāravaṣaṭkārau",
    "926:118": "prokṣaṇābhyukṣaṇādayaḥ|",
    "926:119": "anupāya iti prājñai-",
    "926:120": "rupāyajña praveditaḥ||30||",
    "926:121": "sajjate yena durmedhā",
    "926:122": "manovāgbuddhikarmabhiḥ|",
    "926:123": "viṣayeṣvanabhiṣvaṅga",
    "926:124": "so'bhiṣvaṅga iti smṛtaḥ||31||",
    "926:125": "mamedamahamasyeti",
    "926:126": "yadduḥkhamabhimanyate|",
    "926:127": "vijñeyo'bhyavapātaḥ sa",
    "926:128": "saṃsāre yena pātyate||32||",
    "926:129": "ityavidyāṃ hi vidvānsa",
    "926:130": "pañcaparvā samīhate|",
    "926:131": "tamo mohaṃ mahāmohaṃ",
    "926:132": "tāmisradvayameva ca||33||",
    "926:133": "tatrālasyaṃ tamo viddhi",
    "926:134": "mohaṃ mṛtyuṃ ca janma ca|",
    "926:135": "mahāmohastvasaṃmoha",
    "926:136": "kāma ityeva gamyatām||34||",
    "926:137": "yasmādatra ca bhūtāni",
    "926:138": "pramuhyanti mahāntyapi|",
    "926:139": "tasmādeṣa mahābāho",
    "926:140": "mahāmoha iti smṛtaḥ||35||",
    "926:141": "tāmisramiti cākrodha",
    "926:142": "krodhamevādhikurvate|",
    "926:143": "viṣādaṃ cāndhatāmisra-",
    "926:144": "maviṣāda pracakṣate||36||",
    "926:145": "anayāvidyayā bālaḥ",
    "926:146": "saṃyuktaḥ pañcaparvayā|",
    "926:147": "saṃsāre duḥkhabhūyiṣṭhe",
    "926:148": "janmasvabhiniṣicyate||37||",
    "926:149": "draṣṭā śrotā ca mantā ca",
    "926:150": "kāryakaraṇameva ca|",
    "926:151": "ahamityevamāgamya",
    "926:152": "saṃsāre parivartate||38||",
    "926:153": "ihaibhirhetubhirdhīman",
    "926:154": "janmastrotaḥ pravartate|",
    "926:155": "hetvabhāvātphalābhāva",
    "926:156": "iti vijñātumarhasi||39||",
    "926:157": "tatra samyaṅmatirvidyā-",
    "926:158": "nmokṣakāma catuṣṭayam|",
    "926:159": "pratibuddhāprabuddhau ca",
    "926:160": "vyaktamavyaktameva ca||40||",
    "926:161": "yathāvadetadvijñāya",
    "926:162": "kṣetrajño hi catuṣṭayam|",
    "926:163": "ājavaṃjavatāṃ hitvā",
    "926:164": "prāpnoti padamakṣaram||41||",
    "926:165": "ityartha brāhmaṇā loke",
    "926:166": "paramabrahmavādinaḥ|",
    "926:167": "brahmacarya carantīha",
    "926:168": "brāhmaṇānvāsayanti ca||42||",
    "926:169": "iti vākyamidaṃ śrutvā",
    "926:170": "munestasya nṛpātmajaḥ|",
    "926:171": "abhyupāyaṃ ca papraccha",
    "926:172": "padameva ca naiṣṭhikam||43||",
    "926:173": "brahmacaryamidaṃ caryaṃ",
    "926:174": "yathā yāvacca yatra ca|",
    "926:175": "dharmasyāsya ca paryantaṃ",
    "926:176": "bhavānvyākhyātumarhati||44||",
    "926:177": "ityarāḍo yathāśāstraṃ",
    "926:178": "vispaṣṭārtha samāsataḥ|",
    "926:179": "tamevānyena kalpena",
    "926:180": "dharmamasmai vyabhāṣata||45||",
    "926:181": "ayamādau gṛhānmuktvā",
    "926:182": "bhaikṣākaṃ liṅgamāśritaḥ|",
    "926:183": "samudācāravistīrṇa",
    "926:184": "śīlamādāya vartate||46||",
    "926:185": "saṃtoṣaṃ paramāsthāya",
    "926:186": "yena tena yatastataḥ|",
    "926:187": "viviktaṃ sevate vāsaṃ",
    "926:188": "nirdvandvaḥ śāstravitkṛtī||47||",
    "926:189": "tato rāgādbhayaṃ dṛṣṭvā",
    "926:190": "vairāgyācca paraṃ śivam|",
    "926:191": "nigṛhṇannindriyagrāmaṃ",
    "926:192": "yatate manasaḥ śame||48||",
    "926:193": "atho viviktaṃ kāmebhyo",
    "926:194": "vyāpādādibhya eva ca|",
    "926:195": "vivekajamavāpnoti",
    "926:196": "pūrvadhyānaṃ vitarkavat||49||",
    "926:197": "tacca dhyānasukhaṃ prāpya",
    "926:198": "tattadeva vitarkayān|",
    "926:199": "apūrvasukhalābhena",
    "926:200": "hriyate bāliśo janaḥ||50||",
    "926:201": "śamenaivaṃvidhenāyaṃ",
    "926:202": "kāmadveṣavigarhiṇā|",
    "926:203": "brahmalokamavāpnoti",
    "926:204": "paritoṣeṇa vañcitaḥ||51||",
    "926:205": "jñātvā vidvānvitarkāstu",
    "926:206": "manaḥsaṃkṣobhakārakān|",
    "926:207": "tadviyuktamavāpnoti",
    "926:208": "dhyānaṃ prītisukhānvitam||52||",
    "926:209": "hriyamāṇastayā prītyā",
    "926:210": "yo viśeṣaṃ na paśyati|",
    "926:211": "sthānaṃ bhāsvaramāpnoti",
    "926:212": "deveṣvābhāsvareṣu saḥ||53||",
    "926:213": "yastu prītisukhāttasmā-",
    "926:214": "dvivecayati mānasam|",
    "926:215": "tṛtīyaṃ labhate dhyānaṃ",
    "926:216": "sukhaṃ prītivivarjitam||54||",
    "926:217": "yastu tasminsukhe magno",
    "926:218": "na viśeṣāya yatnavān|",
    "926:219": "śubhakṛtsnaiḥ sa sāmānyaṃ",
    "926:220": "sukhaṃ prāpnoti daivataiḥ||55||",
    "926:221": "tādṛśaṃ sukhāmāsādya",
    "926:222": "yo na rajyatyupekṣakaḥ",
    "926:223": "caturtha dhyānamāpnoti",
    "926:224": "sukhaduḥkhavivarjitam||56||",
    "926:225": "tatra kecidvyavasyanti",
    "926:226": "mokṣa ityabhimāninaḥ|",
    "926:227": "sukhaduḥkhaparityāgā-",
    "926:228": "davyāpārācca cetasaḥ||57||",
    "926:229": "asya dhyānasya tu phalaṃ",
    "926:230": "samaṃ devairbṛhatphalaiḥ|",
    "926:231": "kathayanti bṛhatkālaṃ",
    "926:232": "bṛhatprajñāparīkṣakāḥ||58||",
    "926:233": "samādhervyutthitastasmād",
    "926:234": "dṛṣtvā doṣāṃścharīriṇām|",
    "926:235": "jñānamārohati prājñaḥ",
    "926:236": "śarīravinivṛttaye||59||",
    "926:237": "tatastaddhyānamutsṛjya",
    "926:238": "viśeṣe kṛtaniścayaḥ|",
    "926:239": "kāmebhya iva sa prājño",
    "926:240": "rūpādapi virajyate||60||",
    "926:241": "śarīre khāni yānyasmi-",
    "926:242": "ntānyādau parikalpayan|",
    "926:243": "ghaneṣvapi tato dravye-",
    "926:244": "ṣvākāśamadhimucyate||61||",
    "926:245": "ākāśagatamātmānaṃ",
    "926:246": "saṃkṣipya tvaparo budhaḥ|",
    "926:247": "tadevānantataḥ paśya-",
    "926:248": "nviśeṣamadhigacchati||62||",
    "926:249": "adhyātmakuśalastvanyo",
    "926:250": "nivartyātmānamātmanā|",
    "926:251": "kiṃcinnāstīti saṃpaśya-",
    "926:252": "nnākiṃcanya iti smṛtaḥ||63||",
    "926:253": "tato muñjādiṣīkeva",
    "926:254": "śakuniḥ pañjarādiva|",
    "926:255": "kṣetrajño niḥsṛto dehā-",
    "926:256": "nmukta ityabhidhīyate||64||",
    "926:257": "etattatparamaṃ brahma",
    "926:258": "nirliṅga dhruvamakṣaram|",
    "926:259": "yanmokṣa iti tattvajñāḥ",
    "926:260": "kathayanti manīṣiṇaḥ||65||",
    "926:261": "ityupāyaṃśca mokṣaśca",
    "926:262": "mayā saṃdarśitastava|",
    "926:263": "yadi jñātaṃ yadi ruci-",
    "926:264": "ryathāvatpratipadyatām||66||",
    "926:265": "jaigīṣavyo'tha janako",
    "926:266": "vṛddhaścaiva parāśaraḥ|",
    "926:267": "imaṃ panthānamāsādya",
    "926:268": "muktā hyanye ca mokṣiṇaḥ||67||",
    "926:269": "iti tasya sa tadvākyaṃ",
    "926:270": "gṛhītvā tu vicārya ca|",
    "926:271": "pūrvahetubalaprāptaḥ",
    "926:272": "pratyuttaramuvāca ha||68||",
    "926:273": "śrutaṃ jñānamidaṃ sūkṣmaṃ",
    "926:274": "parataḥ parataḥ śivam|",
    "926:275": "kṣetrajñasyāparityāgā-",
    "926:276": "davaimyetadanaiṣṭhikam||69||",
    "926:277": "vikāraprakṛtibhyo hi",
    "926:278": "kṣetrajñaṃ muktamapyaham|",
    "926:279": "manye prasavadharmāṇaṃ",
    "926:280": "bījadharmāṇameva ca||70||",
    "926:281": "viśuddho yadyapi hyātmā",
    "926:282": "nirmukta iti kalpyate|",
    "926:283": "bhūyaḥ pratyayasadbhāvā-",
    "926:284": "damuktaḥ sa bhaviṣyati||71||",
    "926:285": "ṛtubhūmyambuvirahā-",
    "926:286": "dyathā bījaṃ na rohati|",
    "926:287": "rohati pratyayaistaistai-",
    "926:288": "stadvatso'pi mato mama||72||",
    "926:289": "yatkarmājñānatṛṣṇānāṃ",
    "926:290": "tyāgānmokṣaśca kalpyate|",
    "926:291": "atyantastatparityāgaḥ",
    "926:292": "satyātmani na vidyate||73||",
    "926:293": "hitvā hitvā trayamidaṃ",
    "926:294": "viśeṣastūpalabhyate|",
    "926:295": "ātmanastu sthitiryatra",
    "926:296": "tatra sūkṣmamidaṃ trayam||74||",
    "926:297": "sūkṣmatvāccaiva doṣāṇā-",
    "926:298": "mavyāpārācca cetasaḥ|",
    "926:299": "dīrghatvādāyuṣaścaiva",
    "926:300": "mokṣastu parikalpyate||75||",
    "926:301": "ahaṃkāraparityāgo",
    "926:302": "yaścaiṣa parikalpyate|",
    "926:303": "satyātmani parityāgo",
    "926:304": "nāhaṃkārasya vidyate||76||",
    "926:305": "saṃkhyādibhiramuktaśca",
    "926:306": "nirguṇo na bhavatyayam|",
    "926:307": "tasmādasati nairguṇye",
    "926:308": "nāsya mokṣo'bhidhīyate||77||",
    "926:309": "guṇino hi guṇānāṃ ca",
    "926:310": "vyatireko na vidyate|",
    "926:311": "rūpoṣṇābhyāṃ virahito",
    "926:312": "na hyagnirupalabhyate||78||",
    "926:313": "prāgdehānna bhaveddehī",
    "926:314": "prāgguṇebhyastathā guṇī|",
    "926:315": "tasmādādau vimuktaḥ san",
    "926:316": "śarīrī badhyate punaḥ||79||",
    "926:317": "kṣetrajño viśarīraśca",
    "926:318": "jño vā syādajña eva vā|",
    "926:319": "yadi jño jñeyamasyāsti",
    "926:320": "jñeye sati na mucyate||80||",
    "926:321": "athājña iti siddho vaḥ",
    "926:322": "kalpitena kimātmanā|",
    "926:323": "vināpi hyātmanājñānaṃ",
    "926:324": "prasiddhaṃ kāṣṭhakuḍyavat||81||",
    "926:325": "parataḥ paratastyāgo",
    "926:326": "yasmāttu guṇavān smṛtaḥ|",
    "926:327": "tasmātsarvaparityāgā-",
    "926:328": "nmanye kṛtsnāṃ kṛtārthatām||82||",
    "926:329": "iti dharmamarāḍasya",
    "926:330": "viditvā na tutoṣa saḥ|",
    "926:331": "akṛtsnamiti vijñāya",
    "926:332": "tataḥ pratijagāma ha||83||",
    "926:333": "viśeṣamatha śuśrūṣu-",
    "926:334": "rudrakasyāśramaṃ yayau|",
    "926:335": "ātmagrāhācca tasyāpi",
    "926:336": "jagṛhe na sa darśanam||84||",
    "926:337": "saṃjñāsaṃjñitvayordoṣaṃ",
    "926:338": "jñātvā hi munirudrakaḥ|",
    "926:339": "ākiṃcanyātparaṃ lebhe-",
    "926:340": "'saṃjñāsaṃjñātmikāṃ gatim||85||",
    "926:341": "yasmāccālambane sūkṣme",
    "926:342": "saṃjñāsaṃjñe tataḥ param|",
    "926:343": "nāsaṃjñī naiva saṃjñīti",
    "926:344": "tasmāttatragataspṛhaḥ||86||",
    "926:345": "yataśca buddhistatraiva",
    "926:346": "sthitānyatrāpracāriṇī|",
    "926:347": "sūkṣmāpaṭvī tatastatra",
    "926:348": "nāsaṃjñitvaṃ na saṃjñitā||87||",
    "926:349": "yasmācca tadapi prāpya",
    "926:350": "punarāvartate jagat|",
    "926:351": "bodhisattvaḥ paraṃ prepsu-",
    "926:352": "stasmādudrakamatyajat||88||",
    "926:353": "tato hitvāśramaṃ tasya",
    "926:354": "śreyo'rthī kṛtaniścayaḥ|",
    "926:355": "bheje gayasya rājarṣe-",
    "926:356": "rnagarīsaṃjñamāśramam||89||",
    "926:357": "atha nairañjanātīre",
    "926:358": "śucau śuciparākramaḥ|",
    "926:359": "cakāra vāsamekānta-",
    "926:360": "vihārābhiratirmuniḥ||90||",
    "926:361": "āgatān tatra tatpūrva",
    "926:362": "pañcendriyavaśoddhatān|",
    "926:363": "tapaḥpravṛttān vratino",
    "926:364": "bhikṣūn pañca niraikṣata||91||",
    "926:365": "te copatastthurdṛṣṭvātra",
    "926:366": "bhikṣavastaṃ mumukṣavaḥ|",
    "926:367": "puṇyārjitadhanārogya-",
    "926:368": "mindriyārthā iveśvaram||92||",
    "926:369": "saṃpūjyamānastaiḥ pravhai-",
    "926:370": "rvinayādanuvartibhiḥ|",
    "926:371": "tadvaśasthāyibhiḥ śiṣyai-",
    "926:372": "rlolairmana ivendriyaiḥ||93||",
    "926:373": "mṛtyujanmāntakaraṇe",
    "926:374": "syādupāyo'yamityatha|",
    "926:375": "duṣkarāṇi samārebhe",
    "926:376": "tapāṃsyanaśanena saḥ||94||",
    "926:377": "upavāsavidhīnnaikān",
    "926:378": "kurvannaradurācarān|",
    "926:379": "varṣāṇi ṣaṭ śamaprepsu-",
    "926:380": "rakarotkārśyamātmanaḥ||95||",
    "926:381": "annakāleṣu caikaikaiḥ",
    "926:382": "sa kolatilataṇḍulaiḥ|",
    "926:383": "apārapārasaṃsāra-",
    "926:384": "pāraṃ prepsurapārayat||96||",
    "926:385": "dehādapacayastena",
    "926:386": "tapasā tasya yaḥ kṛtaḥ|",
    "926:387": "sa evopacayo bhūya-",
    "926:388": "stejasāsya kṛto'bhavat||97||",
    "926:389": "kṛśo'pyakṛśakīrtiśrī-",
    "926:390": "rlhādaṃ cakre'nyacakṣuṣām|",
    "926:391": "kumudānāmiva śara-",
    "926:392": "cchuklapakṣādicandramāḥ||98||",
    "926:393": "tvagasthiśeṣo niḥśeṣai-",
    "926:394": "rmedaḥpiśitaśoṇitaiḥ|",
    "926:395": "kṣīṇo'pyakṣīṇagāmbhīryaḥ",
    "926:396": "samudra iva sa vyabhāt||99||",
    "926:397": "atha kaṣṭatapaḥspaṣṭa-",
    "926:398": "vyarthakliṣṭatanurmuniḥ|",
    "926:399": "bhavabhīrurimāṃ cakre",
    "926:400": "buddhiṃ buddhatvakāṅkṣayā||100||",
    "926:401": "nāyaṃ dharmo virāgāya",
    "926:402": "na bodhāya na muktaye|",
    "926:403": "jambumūle mayā prāpto",
    "926:404": "yastadā sa vidhirdhruvaḥ||101||",
    "926:405": "na cāsau durbalenāptuṃ",
    "926:406": "śakyamityāgatādaraḥ|",
    "926:407": "śarīrabalavṛddhyartha-",
    "926:408": "midaṃ bhūyo'nvacintayat||102||",
    "926:409": "kṣutpipāsāśramaklāntaḥ",
    "926:410": "śramādasvasthamānasaḥ|",
    "926:411": "prāpnuyānmanasāvāpyaṃ",
    "926:412": "phalaṃ kathamanirvṛtaḥ||103||",
    "926:413": "nirvṛtiḥ prāpyate samyak",
    "926:414": "satatendriyatarpaṇāt|",
    "926:415": "saṃtarpitendriyatayā",
    "926:416": "manaḥsvāsthyamavāpyate ||104||",
    "926:417": "svasthaprasannamanasaḥ",
    "926:418": "samādhirupapadyate|",
    "926:419": "samādhiyuktacittasya",
    "926:420": "dhyānayogaḥ pravartate||105||",
    "926:421": "dhyānapravartanāddharmāḥ",
    "926:422": "prāpyante yairavāpyate|",
    "926:423": "durlabhaṃ śāntamajaraṃ",
    "926:424": "paraṃ tadamṛtaṃ padam||106||",
    "926:425": "tasmādāhāramūlo'ya-",
    "926:426": "mupāya itiniścayaḥ|",
    "926:427": "āhārakaraṇe dhīraḥ",
    "926:428": "kṛtvāmitamatirmatim||107||",
    "926:429": "snāto nairañjanātīrā-",
    "926:430": "duttatāra śanaiḥ kṛśaḥ|",
    "926:431": "bhaktyāvanataśākhāgrai-",
    "926:432": "rdattahastastaṭadrumaiḥ||108||",
    "926:433": "atha gopādhipasutā",
    "926:434": "daivatairabhicoditā|",
    "926:435": "udbhutahṛdayānandā",
    "926:436": "tatra nandabalāgamat||109||",
    "926:437": "sitaśaṅkhojjvalabhujā",
    "926:438": "nīlakambalavāsinī|",
    "926:439": "saphenamālānīlāmbu-",
    "926:440": "ryamuneva saridvarā||110||",
    "926:441": "sā śraddhāvardhitaprīti-",
    "926:442": "rvikasallocanotpalā|",
    "926:443": "śirasā praṇipatyainaṃ",
    "926:444": "grāhayāmāsa pāyasam||111||",
    "926:445": "kṛtvā tadupabhogena",
    "926:446": "prāptajanmaphalāṃ sa tām|",
    "926:447": "bodhiprāptau samartho'bhū-",
    "926:448": "tsaṃtarpitaṣaḍindriyaḥ||112||",
    "926:449": "paryāptāpyānamūrtiśca",
    "926:450": "sārdha svayaśasā muniḥ|",
    "926:451": "kāntidhairye babhāraikaḥ",
    "926:452": "śaśāṅkārṇavayordvayoḥ||113||",
    "926:453": "āvṛtta iti vijñāya",
    "926:454": "taṃ jahuḥ pañca bhikṣavaḥ|",
    "926:455": "manīṣiṇamivātmānaṃ",
    "926:456": "nirmuktaṃ pañca dhātavaḥ||114||",
    "926:457": "vyavasāyadvitīyo'tha",
    "926:458": "śādvalāstīrṇabhūtalam|",
    "926:459": "so'śvatthamūlaṃ prayayau",
    "926:460": "bodhāya kṛtaniścayaḥ||115||",
    "926:461": "tatastadānīṃ gajarājavikramaḥ",
    "926:462": "padasvanenānupamena bodhitaḥ|",
    "926:463": "mahāmunerāgatabodhiniścayo",
    "926:464": "jagāda kālo bhujagottamaḥ stutim||116||",
    "926:465": "yathā mune tvaccaraṇāvapīḍitā",
    "926:466": "muhurmuhurniṣṭanatīva medinī|",
    "926:467": "yathā ca te rājati sūryavatprabhā",
    "926:468": "dhrūvaṃ tvamiṣṭaṃ phalamadya bhokṣyase||117||",
    "926:469": "yathā bhramantyo divi cāṣapaṅktayaḥ",
    "926:470": "pradakṣiṇaṃ tvāṃ kamalākṣa kurvate|",
    "926:471": "yathā ca saumyā divi vānti vāyava-",
    "926:472": "stvamadya buddho niyataṃ bhaviṣyasi||118||",
    "926:473": "tato bhujaṅgapravareṇa saṃstuta-",
    "926:474": "stṛṇānyupādāya śucīni lāvakāt|",
    "926:475": "kṛtapratijño niṣasāda bodhaye",
    "926:476": "mahātarormūlamupāśritaḥ śuceḥ||119||",
    "926:477": "tataḥ sa paryaṅkamakampyamuttamaṃ",
    "926:478": "babandha suptoragabhogapiṇḍitam|",
    "926:479": "bhinadmi tāvadbhuvi naitadāsanaṃ",
    "926:480": "na yāmi yāvatkutakṛtyatāmiti||120||",
    "926:481": "tato yayurmadamatulāṃ divaukaso",
    "926:482": "vavāśire na mṛgagaṇā na pakṣiṇaḥ|",
    "926:483": "na sasvanurvanataravo'nilāhatāḥ",
    "926:484": "kṛtāsane bhagavati niścitātmani||121||",
    "926:485": "iti buddhacarite mahākāvye'rāḍadarśano",
    "926:486": "nāma dvādaśaḥ sargaḥ||12||"
}