{
  "SA01n785:0": "paṃcadaśo binduḥ",
  "SA01n785:1": "catvāri satyāni",
  "SA01n785:2": "1 | catvāri (ārya-)satyāni |",
  "SA01n785:3": "duḥkhasatyaṃ samudaya nirodha mārgasatyaṃ ||",
  "SA01n785:4": "duḥkhasatyaṃ katamat |",
  "SA01n785:5": "ekavidhaṃ kleśalakṣaṇaṃ duḥkhaṃ |",
  "SA01n785:6": "dvividhaṃ kāyaduḥkhaṃ cittaduḥkhaṃ |",
  "SA01n785:7": "trividhaṃ duḥkhaduḥkhaṃ vipariṇāmaduḥkhaṃ saṃskārānityatāduḥkhaṃ |",
  "SA01n785:8": "kāyikamadhyātmaduḥkhaṃ bahirdhāduḥkhaṃ mānasikamadhyātmaduḥkhaṃ bahirdhāduḥkhaṃ |",
  "SA01n785:9": "paṃcavidhaṃ paṃcopādānaskaṃdhāḥ duḥkhaṃ |",
  "SA01n785:10": "ṣaḍvidhaṃ tridhātu (=kāmarūpārūpya )",
  "SA01n785:11": "duḥkhaṃ triviṣa (=rāgadveṣamoha)duḥkhaṃ |",
  "SA01n785:12": "saptavidhaṃ saptavijñānasthitiduḥkhaṃ |",
  "SA01n785:13": "aṣṭavidhaṃ duḥkhaṃ (tadyathā)",
  "SA01n785:14": "jātiḥjarā vyādhiḥ maraṇaṃ apriyasaṃyogaḥ priyaviprayogaḥ yatparyeṣamāṇo na labhate tat sarvaṃ vividhaṃ (=paṃcopādānaskaṃdharūpaṃ)duḥkhaṃ |",
  "SA01n785:15": "iti duḥkhasatyaṃ ||",
  "SA01n785:16": "(samudaya satyaṃ katamat) |",
  "SA01n785:17": "vividhaduḥkhahetavaḥ paṃcopādānaskaṃdhāḥ |",
  "SA01n785:18": "iti samudaya satyaṃ |",
  "SA01n785:19": "nirodhasatyaṃ katamat |",
  "SA01n785:20": "duḥkhasamudayānāmaśeṣato nirodhe nirodhālaṃbanā prajñocyate nirodhasatyaṃ ||",
  "SA01n785:21": "(mārgasatyaṃ katamat) |",
  "SA01n785:22": "āryāṣṭāṃgikamārgabhāvanocyate mārgasatyaṃ ||",
  "SA01n785:23": "2 | catuḥsatyakramo hānādhigamato jñātavyaḥ |",
  "SA01n785:24": "svayaṃ bhāvayataḥ satyalakṣaṇaṃ satyataḥ phalaprāptiḥ bhāvayituḥ pudgalasya na vaṃcanetyucyate satyaṃ |",
  "SA01n785:25": "sthūlāvabodhataḥ kramaḥ |",
  "SA01n785:26": "audarikaṃ duḥkhasatyaṃ sahajaṃ budhyate iti prathamaṃ duḥkhasatyaṃ |",
  "SA01n785:27": "duḥkhāvabodhād duḥkhahetoranumānaṃ |",
  "SA01n785:28": "tataḥ samudeti tatrotpadyata iti samudayasatyaṃ dvitīyaṃ |",
  "SA01n785:29": "asya duḥkhasatyasya yatrāyatane nirodhastatra prāptirvimokṣabhāvanāyā nirvāṇe |",
  "SA01n785:30": "iti nirodhasatyaṃ tṛtīyaṃ |",
  "SA01n785:31": "etasya nirodhasatyasya prāptiḥ katamā |",
  "SA01n785:32": "bhāvayataḥ āryāṣṭāṃgikamārgaṃ prahīṇe saṃyojane nirodhasatyaprāptiḥ |",
  "SA01n785:33": "iti mārgasatyaṃ caturthaṃ ||",
  "SA01n785:34": "3 | paṃcopādānaskaṃdhā nāma phalakāle duḥkhasatyaṃ |",
  "SA01n785:35": "hetukāle paṃcopādānaskaṃdhā nāma samudayasatyamatho duḥkha satyamapi |",
  "SA01n785:36": "tathāhi |",
  "SA01n785:37": "puruṣaḥ putro&#39;",
  "SA01n785:38": "pi nāma pitāpi ||",
  "SA01n785:39": "4 | samudayasatyaṃ bhūyaḥsaṃyojanaṃ |",
  "SA01n785:40": "saṃyojanāni katamāni |",
  "SA01n785:41": "nava saṃyojanāni |",
  "SA01n785:42": "rāgasaṃyojanaṃ pratigha māna avidyā dṛṣṭi parāmarśa mātsarya īrṣyāsaṃyojanaṃ |",
  "SA01n785:43": "traidhātuko rāgaḥ rāgasaṃyojanaṃ |",
  "SA01n785:44": "sattveṣu cittasya prakopo doṣaścaṃḍatā nāma pratighasaṃyojanaṃ |",
  "SA01n785:45": "saptavidho māno mānasaṃyojanaṃ |",
  "SA01n785:46": "tridhātupratisaṃyuktaḥ saṃmoho&#39;",
  "SA01n785:47": "vidyāsaṃyojanaṃ |",
  "SA01n785:48": "trividhā dṛṣṭiḥ [satkāya-antagrāha-mithyādṛṣṭitrayaṃ]dṛṣṭisaṃyojanaṃ |",
  "SA01n785:49": "dve dṛṣṭī [dṛṣṭiparāmarśaśīlavrataparāmarśadvayaṃ]parāmarśasaṃyojanaṃ |",
  "SA01n785:50": "catuḥsatyeṣvaniścayo vicikitsā saṃyojanaṃ |",
  "SA01n785:51": "cittasya kṛpaṇatā snehādanutsargo mātsaryaṃsaṃyojanaṃ |",
  "SA01n785:52": "dveṣeṇa pareṣvasūyā īrṣyāsaṃyojanaṃ ||",
  "SA01n785:53": "5 | nirodhasatyaṃ dvividhaṃ |",
  "SA01n785:54": "sāsravaḥ (=sopādiḥ)",
  "SA01n785:55": "saṃyojanakṣayo (nāma)",
  "SA01n785:56": "nirodhaḥ prathamavidhaḥ |",
  "SA01n785:57": "anāsravaḥ(=nirupādiḥ)",
  "SA01n785:58": "pratipadā (nirodhagāminyā)",
  "SA01n785:59": "saṃyojanakṣayo (nāma)",
  "SA01n785:60": "nirodho dvitīyavidhaḥ ||",
  "SA01n785:61": "6 | vividhāḥ pariśuddhadharmāḥ |",
  "SA01n785:62": "tadyathā |",
  "SA01n785:63": "catasraḥ pratisaṃvidaḥ |",
  "SA01n785:64": "dharmaḥ niruktiḥ pratibhānaṃ arthaḥ |",
  "SA01n785:65": "sarveṣu nāmapadeṣu satyalakṣaṇato jñānaṃ dharmapratisaṃvit |",
  "SA01n785:66": "sarvavacaneṣu śāstreṣu prajñocyate nirukti pratisaṃvit |",
  "SA01n785:67": "sarvadharmeṣu satyalakṣaṇato jñānaṃ pratibhānapratisaṃvit |",
  "SA01n785:68": "sarvā prajñā vacanaṃ dhyānaṃ abhijñāḥ jñānaṃ nāma arthapratisaṃvit ||",
  "SA01n785:69": "7 | srota āpannasya catasro&#39;",
  "SA01n785:70": "kṣayāḥ śraddhāḥ |",
  "SA01n785:71": "buddhe&#39;kṣayā śraddhā dharme&#39;",
  "SA01n785:72": "kṣayā śraddhā saṃghe&#39;",
  "SA01n785:73": "kṣayā śraddhā pariśuddhaśīle&#39;",
  "SA01n785:74": "kṣayā śraddhā |",
  "SA01n785:75": "arhatphalasaṃgṛhīteṣu sarvāśaikṣadharmeṣu vividheṣu buddhādhimātrapuṇyaguṇeṣu anāsravā śraddhocyate buddha&#39;",
  "SA01n785:76": "kṣayā śraddhā |",
  "SA01n785:77": "nirvāṇe&#39;nāsrave ca anāsravasatye ca śaikṣāśaikṣadharmeṣu ca bodhisattvasatyapuṇyaguṇeṣu ca anāsravā śraddhā pariśuddhocyate dharme&#39;",
  "SA01n785:78": "kṣayā śraddhā |",
  "SA01n785:79": "anāsravamārgaphalaprāptau śraddhā caturṣu puruṣayugeṣu aṣṭapuruṣapudgaleṣu sarvapuṇyaguṇeṣu buddhaśrāvakasaṃgheṣu |",
  "SA01n785:80": "aśraddhānyatīrthikeṣu |",
  "SA01n785:81": "ityucyate saṃghe&#39;",
  "SA01n785:82": "kṣayā śraddhā |",
  "SA01n785:83": "avijñaptyanāsravaśīlayoranāsravā śraddhocyate śīle&#39;",
  "SA01n785:84": "kṣayā śraddhā |",
  "SA01n785:85": "pariśuddhasatyaprajñāsahagatā śraddhā tasmādavijeyetyanāsravaśīlaṃ |",
  "SA01n785:86": "tasmādeva akṣayā śraddhā |",
  "SA01n785:87": "iti catasro&#39;",
  "SA01n785:88": "kṣayāḥ śraddhāḥ ||",
  "SA01n785:89": "8 | catvāri vastūni bhavanti samādhiṃ bhāvayataḥ |",
  "SA01n785:90": "samādhiṃ bhāvayato dṛṣṭe dharme sukhavihāralābhaḥ |",
  "SA01n785:91": "samādhiṃ bhāvayato jñānadarśanalābhaḥ |",
  "SA01n785:92": "samādhiṃ bhāvayato bhavati prajñāvivekaḥ |",
  "SA01n785:93": "samādhiṃ bhāvayataḥ āsravāṇāṃ nirodhasya lābhaḥ sarvasya ca kuśalasya |",
  "SA01n785:94": "prathame dhyāne dṛṣṭasukhavihārasya cyutyutpādajñānābhijñāyāḥ lābhaḥ |",
  "SA01n785:95": "ityucyate jñānadarśanaṃ |",
  "SA01n785:96": "upāyena paryeṣayate puṇyaguṇān kāmadhātāvavijñaptiśīlaṃ śrutacintābhāvanānuśaṃsān sarvarūpārūpyadhātudharmān sarvān anāsravān saṃskṛtān dharmān ityucyate prajñāvivekaḥ |",
  "SA01n785:97": "vajropama caturthadhyānena caramaśaikṣacittasahasaṃprayuktena āsravanirodhaḥ |",
  "SA01n785:98": "ityucyate bhāvitaḥ samādhiḥ |",
  "SA01n785:99": "āsravāṇāṃ nirodhalābhaścaturthadhyānasaṃgṛhītaḥ ||",
  "SA01n785:100": "9 | catasraḥ pratipadaḥ |",
  "SA01n785:101": "duḥkhāpratipaddhaṃdhābhijñā duḥkhāpratipatkṣiprābhijñā sukhāpratiddhaṃdhābhijñā sukhāpratipatkṣiprābhijñā |",
  "SA01n785:102": "śraddhānusāriṇo&#39;",
  "SA01n785:103": "nāsravadharmaṇo mṛdvindriyasya duḥkhāpratipaddhaṃdhābhijñā |",
  "SA01n785:104": "dharmānusāriṇo&#39;",
  "SA01n785:105": "nāsravadharmaṇo&#39;",
  "SA01n785:106": "dhimātrendriyasya duḥkhāpratitkṣiprābhijñā |",
  "SA01n785:107": "maulacaturdhyāneṣvadhimātrendriyasya mṛdvindriyasya ca dharmābhidhā sukhāpratipat |",
  "SA01n785:108": "tatra ko hetuḥ |",
  "SA01n785:109": "śamathavipaśyanāmārgaḥ samaḥ (tatra)iti hetuḥ |",
  "SA01n785:110": "anyabhūmiṣu śamathavipaśyanayoruccāvacatvād duḥkhā (pratipad) |",
  "SA01n785:111": "dvayoḥ sthānayo rasamāpatyanantaradhyānayoḥ śamathamārgo&#39;",
  "SA01n785:112": "lpīyān vipaśyanāmārgo bhūyān |",
  "SA01n785:113": "ārūpyadhātau vipaśyanāmārgo&#39;",
  "SA01n785:114": "lpīyān śamathamārgo bhūyān |",
  "SA01n785:115": "iti duḥkhādhigamatvād duḥkhā pratipat ||",
  "SA01n785:116": "10 | sapta vijñānasthitayaḥ |",
  "SA01n785:117": "kāmadhātau sarvadevamanuṣyāḥ rūpadhātau sthāpayitvā prathamopapannadevān brahmakāyikā devāḥ nānākāyanānāsaṃjñāḥ | 1 |",
  "SA01n785:119": "brahmalokopapannāḥ nānākāyaikasaṃjñāḥ | 2 |",
  "SA01n785:121": "dvitīyadhyānopapannadevāḥ ekakāyanānāsaṃjñāḥ | 3 |",
  "SA01n785:123": "tṛtīyadhyānopapannadevāḥ ekakāyaikasaṃjñāḥ | 4 |",
  "SA01n785:125": "ākāśānantyāyatanopapannadevāḥ | 5 |",
  "SA01n785:127": "vijñānānantyāyatanopapannadevāḥ | 6 |",
  "SA01n785:129": "ākiṃcanyāyatanopapannadevāḥ | 7 |",
  "SA01n785:131": "iti saptavijñānasthitayaḥ ||",
  "SA01n785:132": "11 | durgatau duḥkhā vedanā nihanti vijñānamiti na ṣaḍvijñānasthitiḥ |",
  "SA01n785:133": "caturthadhyāne&#39;",
  "SA01n785:134": "saṃjñisamāpattau (ca)",
  "SA01n785:135": "vijñānasya nihatatvād naivāsti ṣaḍvijñāna sthitiprāptiḥ ||",
  "SA01n785:136": "12 | nava sattvāvāsāḥ |",
  "SA01n785:137": "etāḥ saptavijñānasthitayaḥ asaṃjñisattvāḥ naivasaṃjñānāsaṃjñāyatanaṃ ceti nava sattvāvāsāḥ |",
  "SA01n785:138": "eteṣvāvāseṣu (sattvānāṃ)",
  "SA01n785:139": "sthitatvāt ||",
  "SA01n785:140": "13 | vastrācchādana-peyakhādya-śayanāsana (saṃtoṣeṇa)",
  "SA01n785:141": "prītyā (ca)",
  "SA01n785:142": "kleśakṣayo bhāvanālaṃbanabalena mārgaprāptiḥ |",
  "SA01n785:143": "ityucyaṃte catvāryāryabījāni |",
  "SA01n785:144": "praṇīte vā hīne vā vastrācchādane peyakhādye śayanāsane saṃtoṣa iti trīṇyāryabījāni |",
  "SA01n785:145": "arjane (duḥkhaṃ)",
  "SA01n785:146": "rakṣaṇe (duḥkhaṃ)",
  "SA01n785:147": "kṣaye duḥkhaṃ |",
  "SA01n785:148": "tribhiraterduḥkhaiḥ kuśalamārgahāniḥ |",
  "SA01n785:149": "nirāhārasya prāṇino na sthitiḥ |",
  "SA01n785:150": "ityadhigantavyaḥ saṃtoṣaḥ |",
  "SA01n785:151": "[(tataḥ)]triduḥkhakṣayaḥ | ]",
  "SA01n785:152": "vairāgyacitte sukhaprītilābhaḥ |",
  "SA01n785:153": "iti caturthaṃ (āryabījaṃ) ||",
  "SA01n785:154": "14 | aṣṭottaraśataṃ vedanāḥ cakṣuśrotraghrāṇajihvākāyamanaḥsparśairjāyante |",
  "SA01n785:155": "ityucyaṃte ṣaṭ sparśāḥ |",
  "SA01n785:156": "(tāḥ sparśajā vedanāḥ)",
  "SA01n785:157": "bhavanti trividhāḥ |",
  "SA01n785:158": "cakṣuṣā rūpadarśane saumanasyaṃ daurmanasyaṃ upekṣā yāvat manasā dharmasmaraṇe saumanasyaṃ daurmanasyaṃ upekṣā |",
  "SA01n785:159": "tatra (ekaikā)",
  "SA01n785:160": "kuśalā (vā bhavati)akuśalā (vā) |",
  "SA01n785:161": "(evaṃ)kuśalā aṣṭādaśa akuśalā aṣṭādaśa |",
  "SA01n785:162": "iti ṣaṭtriṃśat (punaḥ)",
  "SA01n785:163": "tridhā bhinnā bhavantyaṣṭottaraśataṃ |",
  "SA01n785:164": "(tathāhi |",
  "SA01n785:165": ")ṣaṭtriṃśadatītāḥ ṣaṭtriṃśadanāgatāḥ ṣaṭtriṃśat pratyutpannāḥ ||",
  "SA01n785:166": "paṃca vijñānāni na śaknuvanti vivektaṃ tasmānna teṣu saumanasyaṃ (vā bhavati)",
  "SA01n785:167": "daurmanasyaṃ (vā) ||",
  "SA01n785:168": "15 | cittasaṃskāre caitasikadharmasaṃtānasya satatamavicchinnaṃ cintanaṃ nāma smṛtiḥ |",
  "SA01n785:169": "ciṃtanahetupratyayā anusaranti tān dharmān iti hetorāvṛttā bhavati cintā |",
  "SA01n785:170": "vijñānasmṛtibalaṃ dṛḍhaṃ bhavati |",
  "SA01n785:171": "iti nātītadharmapramoṣaḥ ||",
  "SA01n785:172": "16 | suptaḥ puruṣaḥ cittacaitasikadharmān pratītya svapnaṃ paśyati |",
  "SA01n785:173": "ahetukamapratyayaṃ cāpi paśyati svapnaṃ |",
  "SA01n785:174": "eṣa svapno&#39;tītādhvako vā bhavati anāgatādhvako vā |",
  "SA01n785:175": "cet svapne jātaśṛṃgapuruṣadarśanaṃ tarhi (jāgarasya)",
  "SA01n785:176": "pūrvaṃ gośṛṃgadarśanaṃ tato manuṣyasya kimupādāya na śṛṃgotpāda iti bhṛśaṃ cintanaṃ tata evaṃ smarataḥ prasuptasya bhavati jātaśṛṃgapuruṣadarśanaṃ ||",
  "SA01n785:177": "17 | cittavikṣepaścittabhrāntirucyate saṃmohaḥ |",
  "SA01n785:178": "glāne śarīre bhavati saṃmohaḥ |",
  "SA01n785:179": "bhūtāveśena bhavati saṃmohaḥ |",
  "SA01n785:180": "pūrvajanmapratyayena bhavati saṃmohaḥ ||",
  "SA01n785:181": "18 | trayaḥ skaṃdhāḥ |",
  "SA01n785:182": "śīlaskaṃdhaḥ |",
  "SA01n785:183": "samādhiskaṃdhaḥ |",
  "SA01n785:184": "prajñāskaṃdhaḥ ||",
  "SA01n785:185": "śīlaskaṃdhaḥ katamaḥ |",
  "SA01n785:186": "kāmadhātau vijñapti (śīlaṃ)",
  "SA01n785:187": "avijñaptiśīlaṃ |",
  "SA01n785:188": "rūpadhātāvavijñaptiśīlaṃ ||",
  "SA01n785:189": "samādhiskaṃdhaḥ katamaḥ |",
  "SA01n785:190": "caturdaśa samādhibhāvanā ||",
  "SA01n785:191": "prajñāskandhaḥ katamaḥ |",
  "SA01n785:192": "trividhā prajñā |",
  "SA01n785:193": "śrutamayī cintāmayī bhāvanāmayī |",
  "SA01n785:194": "kāmadhātau dvividhā śrutamayī bhāvanāmayī |",
  "SA01n785:195": "ārūpyadhātāvekadhā bhāvanāmayī ||",
  "SA01n785:196": "19 | dvividhaḥ saṃvaraḥ |",
  "SA01n785:197": "prathama indriyasaṃvaraḥ dvitīyaḥ śīlasaṃvaraḥ |",
  "SA01n785:198": "indriyasaṃvaraḥ katamaḥ |",
  "SA01n785:199": "nopagantuṃ prāpya cintayati mātṛgrāmaṃ |",
  "SA01n785:200": "agrajānujātanujāsaṃjñayā paśyan striyaṃ na cintayati na strīndriyasaṃjñāsmṛtiṃ janayati yato bhavanti bhūyaḥkleśāḥ |",
  "SA01n785:201": "pratyavekṣate kāyacittavivekaṃ |",
  "SA01n785:202": "itīndriyasaṃvaraḥ ||",
  "SA01n785:203": "(śīlasaṃvaraḥ katamaḥ |",
  "SA01n785:204": ")pariharati rāgaṃ vividhānakuśalān dharmān |",
  "SA01n785:205": "akliṣṭo&#39;nāpattikacittaḥ pūrṇaṃ pariharati sapta rāgān |",
  "SA01n785:206": "iti śīlasaṃvaraḥ ||",
  "SA01n785:207": "20 | kleśaḥ akuśalakarma akuśalakarmavipākaḥ |",
  "SA01n785:208": "iti trīṇyāvaraṇāni |",
  "SA01n785:209": "(paṃca)ānantaryakarmāṇi atyantagurukleśebhyastridurgativipākebhyo bhavanti |",
  "SA01n785:210": "triṣu vastuṣu cedekamapi vastu na bhavatyāryadharmalābhaḥ |",
  "SA01n785:211": "ityucyate āvaraṇaṃ ||",
  "SA01n785:212": "21 | akuśalavitarkavicārastrividhaḥ |",
  "SA01n785:213": "rāgo dveṣo mohaḥ |",
  "SA01n785:214": "ete nighnanti trividhaṃ kuśalavitarkavicāraṃ arāgaṃ adveṣaṃ amohaṃ |",
  "SA01n785:215": "trividho vyādhiḥ |",
  "SA01n785:216": "rāgo dvaṣo mohaḥ |",
  "SA01n785:217": "eṣāṃ trividhavyādhīnāṃ trividhaṃ bhaiṣajyaṃ kāye aśucyanupaśyanā satveṣu maitrībhāvanā dvādaśāṃgaḥ pratītyasamutpādaḥ |",
  "SA01n785:218": "iti trividhaṃ bhaiṣajyaṃ ||",
  "SA01n785:219": "22 | kāyabhāvanā śīlabhāvanā cittabhāvanā prajñābhāvanā |",
  "SA01n785:220": "ete dharmāḥ sarvān (eva)",
  "SA01n785:221": "akuśalavipākān na pratilabhate |",
  "SA01n785:222": "labhate vā&#39;lpataravipākaṃ |",
  "SA01n785:223": "pratyutpanne&#39;",
  "SA01n785:224": "dhvani vā anāgate&#39;",
  "SA01n785:225": "dhvani vā labhate vipākaṃ |",
  "SA01n785:226": "kāyabhāvanā katamā |",
  "SA01n785:227": "vividhaṃ paśyatyanityādikaṃ |",
  "SA01n785:228": "śīlabhāvanā katamā |",
  "SA01n785:229": "gṛhītvā śīlaṃ nāpattiko bhavati satatamanurakṣati |",
  "SA01n785:230": "cittabhāvanā katamā |",
  "SA01n785:231": "akuśalavitarkaparihāreṇa bhāvayati kuśalavitarkān |",
  "SA01n785:232": "prajñābhāvanā katamā |",
  "SA01n785:233": "vividhaṃ vivinakti kuśaladharmān vardhayati prajñāṃ ||",
  "SA01n785:234": "23 | kuśalacārī pudgalaḥ kṣipraṃ labhate sugatiṃ |",
  "SA01n785:235": "akuśalacārī kṣipraṃ labhate durgatiṃ |",
  "SA01n785:236": "kuśalo vā pudgalaḥ patati durgatau |",
  "SA01n785:237": "akuśalo vā pudgalo jāyate sugatau |",
  "SA01n785:238": "pūrvajanmaprabalahetupratyayaiḥ vipākaśeṣasyāparisamāptau cyutikāle caramacittasya kuśalākuśalahetoḥ kuśalo&#39;",
  "SA01n785:239": "pi patati durgatau akuśalo&#39;",
  "SA01n785:240": "pi jāyate sugatau ||",
  "SA01n785:241": "[ityabhidharmāmṛtaśāstre catuḥsatyanirdeśo nāma paṃcadaśo binduḥ ||]"
}