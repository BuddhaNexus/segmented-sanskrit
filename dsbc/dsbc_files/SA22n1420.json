{
  "SA22n1420:0": "[3]",
  "SA22n1420:1": "svādhiṣṭhānakramaḥ tṛtīyaḥ",
  "SA22n1420:2": "namaḥ śrīvajragurave",
  "SA22n1420:3": "praṇipatya varaṃ vajraṃ vajrasattvādināyakam |",
  "SA22n1420:4": "svādhiṣṭhānakramaścaiva vakṣyate kṛpayā mayā ||1 ||",
  "SA22n1420:5": "prathamataraṃ tāvad utpattikramānusāreṇa prāptābhiṣekaścaturvidhatantrābhiprāyajñaḥ prāptakāyavākcittavivekaḥ śrutidharaḥ satyadvayādhimokṣo vajraguruṃ samyag ārādhya,",
  "SA22n1420:6": "tataḥ prasannāya gurave mahatīṃ gaṇapūjāṃ kṛtvā ṣoḍaśābdikāṃ mudrāṃ mahāvajragurave datvā,",
  "SA22n1420:7": "tadanantaraṃ guruvaktrād āptasvādhiṣṭhānakramopadeśaḥ,",
  "SA22n1420:8": "tato mālodakasambuddhavajraghaṇṭādānadarpaṇanāmācāryānujñā ityebhiḥ saha guhyābhiṣekaṃ labdhvā ebhiḥ śāstāraṃ guruṃ stūyātḥ |",
  "SA22n1420:9": "śauṣīryaṃ nāsti te kāye māṃsāsthirudhiraṃ na ca |",
  "SA22n1420:10": "indrāyudhamivākāśe kāyaṃ darśitavānasi ||2 ||",
  "SA22n1420:11": "nāmayā nāśuciḥ kāye kṣuttṛṣṇāsambhavo na ca |",
  "SA22n1420:12": "tvayā lokānuvṛttyarthaṃ darśitā laukikī kriyā ||3 ||",
  "SA22n1420:13": "dakacandravadagrāhya sarvadharmeṣvaniśrita |",
  "SA22n1420:14": "anahaṅkāra nirmoha nirālamba namo'stu te ||4 ||",
  "SA22n1420:15": "sadā samāhitaścāsi gacchaṃstiṣṭhan svapaṃstathā |",
  "SA22n1420:16": "īrṣyāpatheṣu sarveṣu nirālamba namo'stu te ||5 ||",
  "SA22n1420:17": "vikurvasi mahāṛddhyā māyopamasamādhinā |",
  "SA22n1420:18": "nirnānātvaṃ samāpanna nirālamba namostu te ||6 ||",
  "SA22n1420:19": "evaṃ vajraguraṃ sadbhūtaguṇena saṃstutya śravaṇārtham adhyeṣayed anayā gāthayāḥ",
  "SA22n1420:20": "sarvajña jñānasandoha bhavacakraviśodhaka |",
  "SA22n1420:21": "adya vyākhyānaratnena prasādaṃ kuru me vibho ||7 ||",
  "SA22n1420:22": "tvatpādapaṅkajaṃ muktvā nāstyanyaccharaṇaṃ vibho |",
  "SA22n1420:23": "tasmāt prasīda buddhāgra jagadvīra mahāmune ||8 ||",
  "SA22n1420:24": "evaṃ śrutvā tu tad vākyam adhyeṣaṇaviśāradam |",
  "SA22n1420:25": "śiṣyakāruṇyamutpādya svādhiṣṭhānamathārabhet ||9 ||",
  "SA22n1420:26": "svādhiṣṭhānakramo nāma saṃvṛteḥ satyadarśanam |",
  "SA22n1420:27": "gurupādaprasādena labhyate tacca nānyathā ||10 ||",
  "SA22n1420:28": "svādhiṣṭhānakramo yena sādhakena na labhyate |",
  "SA22n1420:29": "sūtrāntatantrakalpeṣu vṛthā tasya pariśramaḥ ||11 ||",
  "SA22n1420:30": "svādhiṣṭhānakramaṃ labdhvā sarvabuddhāmayaḥ prabhuḥ |",
  "SA22n1420:31": "janmanīhaiva buddhatvaṃ niḥsandehaṃ prapadyate ||12 ||",
  "SA22n1420:32": "svādhiṣṭhānasamādhiśca prabhāsvarapadaṃ tathā |",
  "SA22n1420:33": "satyadvayamiti khyātaṃ phalahetuviśeṣataḥ ||13 ||",
  "SA22n1420:34": "svādhiṣṭhānānupūrveṇa prāpyate hi prabhāsvaram |",
  "SA22n1420:35": "tasmād vajraguruḥ pūrvaṃ svādhiṣṭhānaṃ pradarśayet ||14 ||",
  "SA22n1420:36": "asvatantraṃ jagat sarvaṃ svatantraṃ naiva jāyate |",
  "SA22n1420:37": "hetuḥ prabhāsvaraṃ tasya sarvaśūnyaṃ prabhāsvaram ||15 ||",
  "SA22n1420:38": "yena cittena bālāśca saṃsāre bandhanaṃ gatāḥ |",
  "SA22n1420:39": "yoginastena cittena sugatānāṃ gatiṃ gatāḥ ||16 ||",
  "SA22n1420:40": "na cātrotpadyate kaścin maraṇaṃ nāpi kasyacit |",
  "SA22n1420:41": "saṃsāra eva jñātavyaścittarūpākṛtiṣṭhitaḥ ||17 ||",
  "SA22n1420:42": "vāyuyogād vinā cittasvarūpaṃ naiva gṛhyate |",
  "SA22n1420:43": "cittāt prakṛtihetutvāt karmajanmasamudbhavaḥ ||18 ||",
  "SA22n1420:44": "tadeva vāyusaṃyuktaṃ vijñānatritayaṃ punaḥ |",
  "SA22n1420:45": "jāyate yogināṃ mūrttirmāyādehastaducyate ||19 ||",
  "SA22n1420:46": "tasmādeva jagat sarvaṃ māyopama ihocyate |",
  "SA22n1420:47": "māyopamasamādhiṣṭhaḥ sarvaṃ paśyati tādṛśam ||20 ||",
  "SA22n1420:48": "rūpaṃ ca vedanā caiva saṃjñā saṃskāra eva ca |",
  "SA22n1420:49": "vijñānaṃ pañcamaṃ caiva catvāro dhātavastathā ||21 ||",
  "SA22n1420:50": "akṣāṇi viṣayāścaiva jñānapañcakameva ca |",
  "SA22n1420:51": "adhyātmabāhyato bhinnaṃ sarvaṃ māyaiva nānyathā ||22 ||",
  "SA22n1420:52": "darpaṇapratibimbena māyādehaṃ ca lakṣayet |",
  "SA22n1420:53": "varṇān indrāyudheneva vyāpitvamudakendunā ||23 ||",
  "SA22n1420:54": "darpaṇe vimale vyaktaṃ dṛśyate pratibimbavat |",
  "SA22n1420:55": "bhāvābhāvāvinirmukto vajrasattvaḥ sucitritaḥ ||24 ||",
  "SA22n1420:56": "sarvākāravaropeto asecanakavigrahaḥ |",
  "SA22n1420:57": "darśayet taṃ suśiṣyāya svādhiṣṭhānaṃ taducyate ||25 ||",
  "SA22n1420:58": "iyameva hi saṃlakṣyā māyā nirdoṣalakṣaṇā |",
  "SA22n1420:59": "māyaiva saṃvṛteḥ satyaṃ kāyaḥ sāmbhogikaśca saḥ ||26 ||",
  "SA22n1420:60": "saiva gandharvasattvaḥ syād vajrakāyaḥ sa eva hi |",
  "SA22n1420:61": "vajrasattvaḥ svayaṃ tasmāt svasya pūjāṃ pravartayet ||27 ||",
  "SA22n1420:62": "ātmā vai sarvabuddhatvaṃ sarvasauritvameva ca |",
  "SA22n1420:63": "tasmāt sarvaprayatnena hyātmānaṃ pūjayet sadā ||28 ||",
  "SA22n1420:64": "mantramudrāprayogaṃ ca maṇḍalādivikalpanam |",
  "SA22n1420:65": "balihomakriryāṃ sarvāṃ kuryān māyopamāṃ sadā ||29 ||",
  "SA22n1420:66": "śāntikaṃ pauṣṭikaṃ cāpi tathā vaśyābhicārikam |",
  "SA22n1420:67": "ākarṣaṇādi yat sarvaṃ kuryād indrāyudhopamam ||30 ||",
  "SA22n1420:68": "śṛṅgārādyupabhogaṃ ca gītavādyādisevanam |",
  "SA22n1420:69": "kalāsu ca pravṛttiṃ ca kuryād udakacandravat ||31 ||",
  "SA22n1420:70": "rūpe śabde tathā gandhe rase spraṣṭavya eva ca |",
  "SA22n1420:71": "cakṣurādipravṛttiṃ ca māyāvad upalakṣayet ||32 ||",
  "SA22n1420:72": "bahunā'tra kimuktena vajrayāne tu tattvataḥ |",
  "SA22n1420:73": "yad yad ālambayed yogī tad tad māyaiva kalpayet ||33 ||",
  "SA22n1420:74": "darpaṇe pratibimbaṃ ca svapnaṃ māyāṃ ca budbudam |",
  "SA22n1420:75": "indrajālaṃ ca sādṛśyaṃ yaḥ paśyed sa prabhuḥ smṛtaḥ ||34 ||",
  "SA22n1420:76": "dṛśyate spṛśyate caiva yathā māyā jagat sadā |",
  "SA22n1420:77": "na copalambhaḥ saṃvṛtyā māyāvat parikīrtitaḥ ||iti ||35 ||",
  "SA22n1420:78": "yad yad indriyamārgatvaṃ māyā tattat svabhāvataḥ |",
  "SA22n1420:79": "asamāhitayogena sarvaṃ buddhamayaṃ vahet ||36 ||",
  "SA22n1420:80": "sarvatra sarvataḥ sarvaṃ sarvathā sarvadā svayam |",
  "SA22n1420:81": "sarvabuddhamayaṃ siddhaṃ svamātmānaṃ sa paśyati ||37 ||",
  "SA22n1420:82": "gacchaṃstiṣṭhan mahāsattvaḥ sarvasaukhamayaḥ prabhuḥ |",
  "SA22n1420:83": "vihārāhārapānādīnākāśāllabhate kṣaṇāt ||38 ||",
  "SA22n1420:84": "bhaveyurbhavacchettāraḥ śāstāraḥ pravare jane |",
  "SA22n1420:85": "pūjyante sasuraiḥ sarvaiḥ praṇipatya muhurmuhuḥ ||39 ||",
  "SA22n1420:86": "yathā śāstari sambaddhe lokayātrāhitaiṣiṇi |",
  "SA22n1420:87": "evameva mahāyogī viśvajñānārthasaṅgrahād ||40 ||",
  "SA22n1420:88": "nāsti kiñcid asādhyaṃ vai vajrasattvena lakṣitam |",
  "SA22n1420:89": "svayaṃ pratyusidhyanti sarvamudrā mahāsukhāḥ ||41 ||",
  "SA22n1420:90": "kleśāḥ karmapathā dehaḥ kartāraśca phalaṃ ca vai |",
  "SA22n1420:91": "marīcisvapnasaṅkāśā gandharvanagaropamāḥ ||42 ||",
  "SA22n1420:92": "imaṃ samādhimajñātvā saṃvṛtāvupalambhataḥ |",
  "SA22n1420:93": "jāyante vividhā rogāsteṣāṃ māyā bhiṣagjitam ||43 ||",
  "SA22n1420:94": "svādhiṣṭhānopadeśastu yena nāsādyate guroḥ |",
  "SA22n1420:95": "śāśvatocchedamālambya sa vaivartī bhavet punaḥ ||44 ||",
  "SA22n1420:96": "sarvapūjāṃ parityajya gurupūjāṃ samārabhet |",
  "SA22n1420:97": "tena tuṣṭena tallabhyaṃ sarvajñajñānamuttamam ||45 ||",
  "SA22n1420:98": "kiṃ tena na kṛtaṃ puṇyaṃ kiṃ vā nopāsitaṃ tapaḥ |",
  "SA22n1420:99": "anuttarakṛdācāryavajrasattvaprapūjanāt ||46 ||",
  "SA22n1420:100": "yad yadiṣṭataraṃ kiñcid viśiṣṭatarameva ca |",
  "SA22n1420:101": "tat taddhi gurave deyaṃ tadevākṣayamicchatā ||47 ||",
  "SA22n1420:102": "ācāryo harate pāpam ācāryo harate bhayam |",
  "SA22n1420:103": "ācāryastārayet pāraṃ duḥkhārṇavamahābhayāt ||48 ||",
  "SA22n1420:104": "yo'haṅkāra[ma]-lāliptaḥ sadbhūtakramadharṣakaḥ |",
  "SA22n1420:105": "sāvajñastattvadharmeṣu tasya tattvaṃ na darśayet ||49 ||",
  "SA22n1420:106": "satyavāggurubhaktaśca viviktaścaikasandhiokaḥ |",
  "SA22n1420:107": "samayācārarakṣī ca kramaṃ tasya pradarśayet ||50 ||",
  "SA22n1420:108": " || svādhiṣṭhānakramastṛtīyaḥ samāptaḥ ||",
  "SA22n1420:109": "kṛtiriyamācāryanāgārjunapādānām |",
  "SA22n1420:110": "granthapramāṇamasya ṣaṭpañcāśat |"
}