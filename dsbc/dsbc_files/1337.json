{
    "1337:0": "tattvaparicchedastṛtīyaḥ",
    "1337:1": "mūlalakṣaṇatattvamaviparyāsalakṣaṇam|",
    "1337:2": "phalahetumayaṃ tattvaṃ sūkṣmaudārikameva ca||1||",
    "1337:3": "prasiddhaṃ śuddhiviṣayaṃ saṅgrāhyaṃ bhedalakṣaṇam|",
    "1337:4": "kauśalyatattvaṃ daśadhā ātmadṛṣṭivipakṣataḥ||2||",
    "1337:5": "svabhāvastrividho'sacca nityaṃ saccā'pyatattvataḥ|",
    "1337:6": "sadasattattvataśceti svabhāvatrayamiṣyate||3||",
    "1337:7": "samāropā'pavādasya dharmapudgalayoriha|",
    "1337:8": "grāhyagrāhakayoścāpi bhāvā'bhāve ca darśanam||4||",
    "1337:9": "yajjñānānna pravarteta taddhi tattvasya lakṣaṇam|",
    "1337:10": "asadartho hyanityārtha utpādadavyayalakṣaṇaḥ||5||",
    "1337:11": "samalā'malabhāvena mūlatattve yathākramam|",
    "1337:12": "duḥkhamādānalakṣmākhyaṃ sambandhenā'paraṃ matam||6||",
    "1337:13": "abhāvaścāpyatadbhāvaḥ prakṛtiḥ śūnyatā matā|",
    "1337:14": "alakṣaṇañca nairātmyaṃ tad-vilakṣaṇameva ca||7||",
    "1337:15": "svalakṣaṇañca nirdiṣṭaṃ duḥkhasatyamato matam|",
    "1337:16": "vāsanā'tha samutthānamavisaṃyoga eva ca||8||",
    "1337:17": "svabhāvadvayanotpattirmalaśāntidvayaṃ matam|",
    "1337:18": "parijñāyāṃ prahāṇe ca prāptisākṣātkṛtāvayam||9||",
    "1337:19": "mārgasatyaṃ samākhyātaṃ prajñaptipratipattitaḥ|",
    "1337:20": "tathodbhāvanayaudāraṃ paramārthantu ekataḥ||10||",
    "1337:21": "arthaprāptiprapattyā hi paramārthastridhā mataḥ|",
    "1337:22": "nirvikārā'viparyāsapariniṣpattito dvayam||11||",
    "1337:23": "lokaprasiddhamekasmāt trayād yuktiprasiddhakam|",
    "1337:24": "viśuddhagocaraṃ dvedhā ekasmādeva kīrtitam||12||",
    "1337:25": "nimittasya vikalpasya nāmnaśca dvayasaṅgrahaḥ|",
    "1337:26": "samyagjñānasatattvasya ekenaiva ca saṅgrahaḥ||13||",
    "1337:27": "pravṛttitattvaṃ dvividhaṃ sanniveśakupannatā|",
    "1337:28": "ekaṃ lakṣaṇavijñaptiśuddhisamyakprapannatā||14||",
    "1337:29": "ekahetutvabhoktṛtvakartṛtvavaśavartane|",
    "1337:30": "ādhipatyārthanityatve kleśaśuddhyāśraye'pi ca||15||",
    "1337:31": "yogitvā'muktamuktatve ātmadarśanameṣu hi|",
    "1337:32": "parikalpavikalpārthadharmatārthena teṣu te||16||",
    "1337:33": "anekatvā'bhisaṅkṣepaparicchedārtha āditaḥ|",
    "1337:34": "grāhakagrāhyatadgrāhabījārthaścā'paro mataḥ||17||",
    "1337:35": "veditārthaparicchedabhogāyadvārato'param|",
    "1337:36": "punarhetuphalāyāsānāropā'napavādataḥ||18||",
    "1337:37": "aniṣṭeṣṭaviśuddhīnāṃ samotpattyādhipatyayoḥ|",
    "1337:38": "samprāptisamudācārapāratantryārthato'param||19||",
    "1337:39": "grahaṇasthānasandhānabhogaśuddhidvayārthataḥ|",
    "1337:40": "phalahetūpayogārthanopayogāttathā'param||20||",
    "1337:41": "vedanāsanimittārthatannimittaprapattitaḥ|",
    "1337:42": "tacchamapratipakṣārthayogādaparamiṣyate||21||",
    "1337:43": "guṇadoṣā'vikalpena jñānena parataḥ svayam|",
    "1337:44": "niryāṇādaparaṃ jñeyaṃ saprajñaptisahetukāt||22||",
    "1337:45": "nimittāt praśamāt sārthāt paścimaṃ samudāhṛtam||",
    "1337:46": "||iti tattvaparicchedastṛtīyaḥ||"
}