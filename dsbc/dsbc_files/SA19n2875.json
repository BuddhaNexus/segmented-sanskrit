{
  "SA19n2875:3": "Śvānastavakāvyam",
  "SA19n2875:10": "śrīmān purā gautamabodhisattvo",
  "SA19n2875:14": "nātho'bhavat kukkhurajanmajānām |",
  "SA19n2875:18": "svajñātivargaṁ maraṇān mumoca",
  "SA19n2875:22": "so'dīdapac cābhayadānam agaram ||1 ||",
  "SA19n2875:29": "vaṁśe jātaḥ paramaguṇino bodhisattvasya tasya",
  "SA19n2875:33": "cchāyāvan me sthitigatiśaye sāhacaryaṁ dadhānaḥ |",
  "SA19n2875:37": "śvāno nāthe sadayahṛdayaḥ ślāghanīyaḥ kṛtajñair",
  "SA19n2875:41": "jīvyād dīrghaṁ muditamanasā jantuvargaṁ prarakṣan ||2 ||",
  "SA19n2875:48": "āhvāya saumyavacasāśanapānadānād",
  "SA19n2875:52": "yaṁ poṣati sma bhaṣakaṁ sutavatsalena |",
  "SA19n2875:56": "duḥkhe sukhe ca sa samaprakṛtiḥ kṛtajñaḥ",
  "SA19n2875:60": "svaṁ svāminaṁ na vijahāti kadā cid eva ||3 ||",
  "SA19n2875:67": "paśyaṁś ca durbalajarāturam eṣa nāthaṁ",
  "SA19n2875:71": "śokābhibhūta iva jṛmbhata eva bhūyaḥ |",
  "SA19n2875:75": "bhuḥ-bhuḥ-svaro vipadi tena vidhīyamānas",
  "SA19n2875:79": "tasya svabhartari kṛpāṁ prakaṭīkaroti ||4 ||",
  "SA19n2875:86": "śrāntasya tasya vikalendriyavṛddhabhartur",
  "SA19n2875:90": "jijñāsur eva kuśalaṁ sa nirāmayaṁ ca |",
  "SA19n2875:94": "pucchaṁ vikampayati jighrati pādayugmaṁ",
  "SA19n2875:98": "kū-kū-svaraṁ carikarīti ca mandamandam ||5 ||",
  "SA19n2875:105": "parṇoṭajābhimukha eva nipatya rātrau",
  "SA19n2875:109": "bhartāram eṣa parirakṣati sāvadhānam |",
  "SA19n2875:113": "uttiṣṭhate bhramati kauti ca nirnimittaṁ",
  "SA19n2875:117": "nityaṁ nivārayati duṣṭajanapraveśam ||6 ||",
  "SA19n2875:124": "saṁsarpate patipuro gamanāvadhāno",
  "SA19n2875:128": "dūraṁ nunutsati vihiṁsakasattvasaṁgham |",
  "SA19n2875:132": "paryeṣate parisaraṁ vyasanaṁ niroddhuṁ",
  "SA19n2875:136": "siṁhasya pota iva garjati dīrghadīrgham ||7 ||",
  "SA19n2875:143": "supto'pi kāṣṭhamayajarjarite kuṭīre",
  "SA19n2875:147": "nidrāsukhaṁ na labhate svapatiṁ prarakṣan |",
  "SA19n2875:151": "yāvat prabhātasamayāc chayanaṁ parīto",
  "SA19n2875:155": "bambhramyate ca vimanā niśi jāgarūkaḥ ||8 ||",
  "SA19n2875:162": "vyājaprasupta uṣasi prathamaṁ prabuddhas",
  "SA19n2875:166": "tandrāṁ vihartum asakṛt sa vijṛmbhya kāyam |",
  "SA19n2875:170": "ākṛṣya nāthakaṭisaktadukūlakoṭiṁ",
  "SA19n2875:174": "vijñāpayet ku-ku-rutena niśāvasānam ||9 ||",
  "SA19n2875:181": "svāmī yadā natavapuḥ karasaktayaṣṭir",
  "SA19n2875:185": "vātābhighātakadalīva vikampamānaḥ |",
  "SA19n2875:189": "gāḍhaṁ skhalan pathi mudhā gamanaṁ vidhatte",
  "SA19n2875:193": "śvā syāt tadānugamamitravaro'pi bandhuḥ ||10 ||",
  "SA19n2875:200": "ākasmikaṁ nipatitaṁ taṭinīpravāhe",
  "SA19n2875:204": "nāthaṁ pragalbhaśunakaḥ sahasāvagāhya |",
  "SA19n2875:208": "ākṛṣya taṁ kaṭinibaddhapaṭena tīraṁ",
  "SA19n2875:212": "nītvā kadā cid akarot sukhitaṁ śrameṇa ||11 ||",
  "SA19n2875:219": "bhogīva kuṇḍalitakāyanipanna eṣa",
  "SA19n2875:223": "jñātvā pater upagatiṁ rabhasotthitaḥ san |",
  "SA19n2875:227": "ūrdhvaṁ namet punar adho nipatec ca nāthaṁ",
  "SA19n2875:231": "śliṣṭvā vicumbati virauti ca bhaktipūrvam ||12 ||",
  "SA19n2875:238": "nāthaḥ sakṛt pathi padaskhalanād visaṁjñam",
  "SA19n2875:242": "āvartamānanayanordhvamukhaṁ nipatya |",
  "SA19n2875:246": "ammāmma-vācam aniśaṁ karuṇaṁ bruvāṇa",
  "SA19n2875:250": "ūrdhvaṁ punaḥ punar adhaḥ parivartate sma || 13 ||",
  "SA19n2875:258": "ekatra yaṣṭir aparatra ca tasya bhikṣā-",
  "SA19n2875:262": "pātraṁ paratra kaṭibandhanamuktakanthā |",
  "SA19n2875:266": "anyatra dhūlihataśīrṣapaṭaccaraṁ ca",
  "SA19n2875:270": "dūraṁ sasarja paritaḥ pathi tatra tatra || 14 ||",
  "SA19n2875:277": "tasyopakartum adhunā svajano hitaiṣī",
  "SA19n2875:281": "naivāgataḥ parahito manujo'pi kaś cit |",
  "SA19n2875:285": "śvāno muhar muhar itas tata eva dehe",
  "SA19n2875:289": "cocumbyate sma vicarann abhitaḥ svanātham ||15 ||",
  "SA19n2875:296": "tat kampamānapatideham asau parīto",
  "SA19n2875:300": "vāvrajyate sma jhaṭiti śvasanārtavakṣāḥ |",
  "SA19n2875:304": "kokūyate sma śirasā bahudhā śarīram",
  "SA19n2875:308": "utkṣiptum eva kurute sma guruprayatnam ||16 ||",
  "SA19n2875:315": "anyopakāram atha so'bhimuke cicīṣur",
  "SA19n2875:319": "dādhāvyate sma purato janasaṁnikarṣam |",
  "SA19n2875:323": "unnamya kandharaśiraṁ hy avikampya pucchaṁ",
  "SA19n2875:327": "rorūyate sma na hi kaś cana saṁlalakṣa ||17 ||",
  "SA19n2875:334": "tasmān nirvartya sahasaiva mukhena yaṣṭim",
  "SA19n2875:338": "āhṛtya pāṇinikaṭe'rpitavān sa bhartuḥ |",
  "SA19n2875:342": "bhartāpi tāṁ samabhigṛhya nitāntakṛcchrād",
  "SA19n2875:346": "utthāya kukkuraśiro'sakṛd āmamarśa ||18 ||",
  "SA19n2875:353": "durgandhitāṁ kuṇakulasya nivāsabhūtāṁ",
  "SA19n2875:357": "prakṣālituṁ na hi śaśāka cireṇa kanthām |",
  "SA19n2875:361": "prāyo mayāpi bhavatā ca jugupsitāṁ tāṁ",
  "SA19n2875:365": "bho mā cucumbiṣasi samprati sārameya ||19 ||",
  "SA19n2875:372": "kaupīnakhaṇḍam api śirṣapaṭaṁ pragāḍham",
  "SA19n2875:376": "ācchādya pātram api hastatale niveśya |",
  "SA19n2875:380": "saṁvepamānacaraṇaṁ vinatordhvakāyam",
  "SA19n2875:384": "āṭāṭyatādhvani punaḥ punar eṣa vṛddhaḥ ||20 ||",
  "SA19n2875:391": "bhikṣāṁ bubhukṣitajanaḥ sa gaveṣamāṇas",
  "SA19n2875:395": "tasthau mahādhanavato bhavanāṅgaṇānte |",
  "SA19n2875:399": "nirgaccha kiṁ cid api no'tra tadā nimīlya",
  "SA19n2875:403": "sāvajñam eṣa dhaniko jagade saroṣam ||21 ||",
  "SA19n2875:410": "tasmān nirvartya dhaninaḥ paruṣaṁ niśamya",
  "SA19n2875:414": "śokārditaḥ śunakam ity avadad daridraḥ |",
  "SA19n2875:418": "mā sārameya bhavatād vimanāḥ kathaṁ cid",
  "SA19n2875:422": "āḍhyo'pi ditsati na kiṁ cana matsarī- hā ||22 ||",
  "SA19n2875:429": "naivāsti saṁcitadhanaṁ bhavanaṁ ca vastuṁ",
  "SA19n2875:433": "dāsopakārakajano jananī pitā vā |",
  "SA19n2875:437": "kaupīnam eva vibhavo mama durgatasya",
  "SA19n2875:441": "bandhuḥ sutaḥ parijanaś ca sakhā tvam eva ||23 ||",
  "SA19n2875:448": "sarvasvam asya hi lulopa paro nihīnaḥ",
  "SA19n2875:452": "kārpaṇyam eva mama santakam adya jātam |",
  "SA19n2875:456": "mitrāṇy amitrajanavad vimukhāny abhūvan",
  "SA19n2875:460": "bhikṣākṛte pratidinaṁ hi tataś carāmi ||24 ||",
  "SA19n2875:467": "bhikṣāṭanādhigatanīrasam annajātaṁ",
  "SA19n2875:471": "pīyuṣavad bhavati me kṣudhayārditasya |",
  "SA19n2875:475": "sacchidrapātram api jīrṇakapālakhaṇḍaṁ",
  "SA19n2875:479": "sarvasvam eva mama kukkura eva bandhuḥ ||25 ||",
  "SA19n2875:486": "ajñaḥ parair upakṛto'pi hiraṇyaratnaiś",
  "SA19n2875:490": "cetaḥ pradūṣayati khādati puṣṭamāṁsam |",
  "SA19n2875:494": "alpānnapānavidhinā puṣito bhavān hi",
  "SA19n2875:498": "kauleyako bhavati satpuruṣaḥ kṛtajñaḥ ||26 ||",
  "SA19n2875:505": "duṣṭo'niśaṁ guṇagaṇair api sevyamāno",
  "SA19n2875:509": "na syāt kadā cid api satpuruṣaḥ kathaṁ cit |",
  "SA19n2875:513": "saṁvardhito'pi payasā praṇayena nityaṁ",
  "SA19n2875:517": "sarpo na tṛpyati ca naiva bhavet kṛtajñaḥ ||27 ||",
  "SA19n2875:524": "jihvādvayaṁ bhavati jihmagatiṁ vidhatte",
  "SA19n2875:528": "chidraṁ nirūpayati hanty upakāriṇaṁ ca |",
  "SA19n2875:532": "māṁsaṁ bubhukṣati pipāsati śoṇitaṁ ca",
  "SA19n2875:536": "hā- durjanasya bhujagasya ca ko viśeṣaḥ ||28 ||",
  "SA19n2875:543": "nīcā bhavanty abhimukhe priyabhaktamitrāṇy",
  "SA19n2875:547": "ete parāṅmukhamahāripavo'kṛtajñāḥ |",
  "SA19n2875:551": "duṣṭāvamānyaśaṭhadurjanamartyajātyā",
  "SA19n2875:555": "bhoḥ śvan bhaved varatamā bhavato hi jātiḥ ||29 ||",
  "SA19n2875:562": "candro nihanti timiraṁ jagati prabhābhiḥ",
  "SA19n2875:566": "sarvatra kundavipinaṁ vimalīkaroti |",
  "SA19n2875:570": "tvaṁ me jahāsi hṛdi duḥkhatamaḥ prakṛtyā",
  "SA19n2875:574": "prītipramodakumudaṁ vikacaṁ karoṣi ||30 ||",
  "SA19n2875:581": "mitrasvarūpaparapuṣṭabhujaḥ sakhāyo",
  "SA19n2875:585": "ye vismaranty upakṛtiṁ hi yathā bhujaṅgāḥ |",
  "SA19n2875:589": "jīvaṁ svakīyam api te vyasanaṁ nayanto",
  "SA19n2875:593": "vandāravat taruṣu saṁparivarjanīyāḥ ||31 ||",
  "SA19n2875:600": "tṛṣṇābhibhūtamanasā vividhopacārair",
  "SA19n2875:604": "vañcanti sajjanam asaccaritā varākāḥ |",
  "SA19n2875:608": "vyājastutiṁ vidadhate madhurair vacobhir",
  "SA19n2875:612": "garhanti te vimukhino vividhapralāpaiḥ ||32 ||",
  "SA19n2875:619": "abhiṣṭutaṁ satpuruṣair maṇīṣibhiḥ",
  "SA19n2875:623": "kṛtopakāraṁ na karoti yo janaḥ |",
  "SA19n2875:627": "manuṣyadharmāpagataḥ sa durjanaḥ",
  "SA19n2875:631": "prayāty apāyaṁ nidhanād anantaram ||33 ||",
  "SA19n2875:638": "parānukampodakadhautacetasaḥ",
  "SA19n2875:642": "prapitsavaḥ svargapadaṁ sukhāspadam |",
  "SA19n2875:646": "titīrṣavo mṛtyujarābhavārṇavaṁ",
  "SA19n2875:650": "kṛtopakāraṁ nitarāṁ prakurvate ||34 ||",
  "SA19n2875:657": "samastavidyāgamapāradarśibhiḥ",
  "SA19n2875:661": "praśaṁsitāṁ nopakṛtiṁ karoti yaḥ |",
  "SA19n2875:665": "piśācarūpo kṛpaṇo narādhamaḥ",
  "SA19n2875:669": "sa varjaṇīyaḥ śamalasya piṇḍavat ||35 ||",
  "SA19n2875:676": "mitropadeśam adhigamya gato'bhivṛddhiṁ",
  "SA19n2875:680": "yo vismaret kṛtaguṇaṁ guṇināṁ praśastam |",
  "SA19n2875:684": "ātmambharir jaraśṛgālasamaḥ sa dīno",
  "SA19n2875:688": "dagdhaśmaśānaśavavat parivarjanīyaḥ ||36 ||",
  "SA19n2875:695": "tadā sa siddhārthakumāragautamo",
  "SA19n2875:699": "niṣedivān bodhitaror adhastale |",
  "SA19n2875:703": "nihatya mārāribalaṁ samūlakaṁ",
  "SA19n2875:707": "bubodha saṁbodhipadaṁ mahottamam ||37 ||",
  "SA19n2875:714": "tataḥ paraṁ saptadinaṁ munīśvaro",
  "SA19n2875:718": "nimeṣamuktena viśuddhacakṣuṣā |",
  "SA19n2875:722": "vilokayan bodhitaruṁ prapūjayann",
  "SA19n2875:726": "adarśayal lokahitaṁ kṛtajñatām ||38 ||",
  "SA19n2875:733": "munipradiṣṭobhayavṛddhisādhanā",
  "SA19n2875:737": "kṛtajñatā yasya bhaven na cetasi |",
  "SA19n2875:741": "manuṣyarūpeṇa caran bhujaṅgamaḥ",
  "SA19n2875:745": "sa varjanīyas tridivaṁ prapitsunā ||39 ||",
  "SA19n2875:752": "rogārdite nijapatau śayanīyapārśve",
  "SA19n2875:756": "śvāno nihatya karuṇaṁ bhuvi pucchamūlam |",
  "SA19n2875:760": "ūrdhvaṁ prasāritavapur hy animeṣacakṣuḥ",
  "SA19n2875:764": "kū-kū-svaraṁ vitanute'bhimukhe niṣadya ||40 ||",
  "SA19n2875:771": "bho bhoḥ kṛtañasuta kukkura mā śuśoca",
  "SA19n2875:775": "bhuktāmiṣaṁ na jaṭhare pariṇāmam eti |",
  "SA19n2875:779": "kāsajvaro'pi vamathur varivarti me'dya",
  "SA19n2875:783": "naivauṣadhaṁ parijano'pi cikitsako vā ||41 ||",
  "SA19n2875:790": "sakalāvayavaḥ prakampate",
  "SA19n2875:794": "vapuṣaḥ śaktir abhāvatāṁ gatā |",
  "SA19n2875:798": "varivarti rujāsthisandhiṣu",
  "SA19n2875:802": "maraṇaṁ me nikaṭaṁ samāgatam ||42 ||",
  "SA19n2875:809": "niśiteṣuvivedhitā yathā",
  "SA19n2875:813": "hṛdayāntar janitogravedanāḥ |",
  "SA19n2875:817": "divi vā bhiṣajāṁ gaṇair api",
  "SA19n2875:821": "na hi śakyāḥ śamituṁ kadā cana ||43 ||",
  "SA19n2875:828": "khananaṁ viṣasūcinā yathā",
  "SA19n2875:832": "paripīḍā śirasi pravartate |",
  "SA19n2875:836": "ghananiśvasitaṁ viśeṣato",
  "SA19n2875:840": "varivarty antakamanyuvāyuvat ||44 ||",
  "SA19n2875:847": "asamāptavacaḥ sagadgadaṁ",
  "SA19n2875:851": "bahir āgacchati mandam āsyataḥ |",
  "SA19n2875:855": "kṣatadantamukhodare'dhunā",
  "SA19n2875:859": "rasanā niṣkriyavat pravartate ||45 ||",
  "SA19n2875:866": "abhunā jarayā vimarditaṁ",
  "SA19n2875:870": "śravaṇaṁ mudritam eva mṛtyunā |",
  "SA19n2875:874": "kṣayapakṣagatendulīdhitis",
  "SA19n2875:878": "amatām eti vilocanadvayam ||46 ||",
  "SA19n2875:885": "suta mā śucayārdito bhava",
  "SA19n2875:889": "kṛtavedin bhuvi martyajanmiṣu |",
  "SA19n2875:893": "apahāya bhavantam āśv ahaṁ",
  "SA19n2875:897": "na cireṇāntakamandiraṁ bhaje ||47 ||",
  "SA19n2875:904": "bhavato guṇasaṁcayaḥ sadā",
  "SA19n2875:908": "bhavatān martyajanasya darpaṇaḥ |",
  "SA19n2875:912": "akṛtajñanarāṁś ca śikṣituṁ",
  "SA19n2875:916": "bhavatāc chikṣakapuṁgavo bhavān ||48 ||",
  "SA19n2875:923": "tridaśe bhuvi vā kadā cana",
  "SA19n2875:927": "na tu kiṁ cid dhruvam asti śāśvatam |",
  "SA19n2875:931": "muninā jadagekabandhunā",
  "SA19n2875:935": "viditā nirvṛtir eva susthirā ||49 ||",
  "SA19n2875:942": "' sattveṣv ahaṁ paramanīcapaśur bhavāmi '",
  "SA19n2875:946": "mā mitra kukkura tathā vimanā bhava tvam |",
  "SA19n2875:950": "ślāghyo bhavān bhavati sādhu kṛtopakāraṁ",
  "SA19n2875:954": "hastastharatnam iva māṁ ca sadā rarakṣa ||50 ||",
  "SA19n2875:961": "dhīman kṛtajñaśunaka priyamitravarya",
  "SA19n2875:965": "mā bhūt kadā cid api te manujeṣu janma |",
  "SA19n2875:969": "nollaṅghya sadguṇagaṇaṁ tava vidyamānaṁ",
  "SA19n2875:973": "jivyāt sukhena suciraṁ jagato hitāya || 51 ||",
  "SA19n2875:980": "tattvāvabuddhaśunakaḥ sapadi svabhartur",
  "SA19n2875:984": "dādhāvyate sma savidhe bhiṣajo niketam |",
  "SA19n2875:988": "leledhi tasya caraṇaṁ mukham īkṣamāṇaḥ",
  "SA19n2875:992": "prāk pādayor nyapatad āśu viṣādapūrvam ||52 ||",
  "SA19n2875:999": "jajñe cikitsakavaro na hi kukkurasya",
  "SA19n2875:1003": "sūkṣmeṅgitaṁ sa ca na taṁ gaṇayāṁ babhūva |",
  "SA19n2875:1007": "śokābhibhūtaśunakaḥ sa punaḥ svanātham",
  "SA19n2875:1011": "āgamya deham asakṛt paritaś cucumba ||53 ||",
  "SA19n2875:1018": "duḥsādhyarogavikalendriyanaṣṭabhāgyaḥ",
  "SA19n2875:1022": "prāṇān vihāya paralokam upāgataḥ saḥ |",
  "SA19n2875:1026": "bhartur viyogam asahiṣṇur aho- kṛtajñaḥ",
  "SA19n2875:1030": "śvāno vidīrya hṛdayaṁ ca tam anvagacchat ||54 ||",
  "SA19n2875:1037": "duḥkhārṇave maraṇajātijarātaraṅge",
  "SA19n2875:1041": "jāto mayopacitakarmabalād bhave'smin |",
  "SA19n2875:1045": "mā bhūd asādhuṣa kadā cana janma martye",
  "SA19n2875:1049": "nirvāṇam eva bhavatād bhavato vimuktam ||55 ||",
  "SA19n2875:1056": "davuldeṇagrāmajātajñāneśvarayatīśvaraḥ |",
  "SA19n2875:1060": "śvānastava iti khyātaprabandhaṁ kṛtavān imam ||"
}