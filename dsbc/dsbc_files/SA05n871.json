{
  "SA05n871:0": "Nāmāṣṭaśatakaya",
  "SA05n871:1": "namaḥ śākyasiṃhāya",
  "SA05n871:2": "1. sambuddha puṇḍarīkākṣa sarvajña karuṇāspadam",
  "SA05n871:3": "samantabhadra śāstāra śākyasiṃham namāmy aham |",
  "SA05n871:4": "2. śrīghana śrīmati śreṣṭha śīlarāśi śivaṅkaram",
  "SA05n871:5": "śrīmanta śrīkara śānta śāntaveśa namāmy aham |",
  "SA05n871:6": "3. nairātmyavādina siddha niravadya nirāśravam",
  "SA05n871:7": "nītijña nirmalātmāna niṣkalaṅkam namāy aham |",
  "SA05n871:8": "4. nirvāda nirahaṅkāra nirvikalpa tathāgatām",
  "SA05n871:9": "nirdhūtanikhilakleśa niṣprapañca namāmy aham |",
  "SA05n871:10": "5. viśveśvara vimuktijña viśvarūpa vināyakam",
  "SA05n871:11": "viśvalakṣaṇasampūrṇa vītarāga namāmy aham |",
  "SA05n871:12": "6. vidyācaraṇasampanna viśveśa vimalaprabham",
  "SA05n871:13": "vinītaveśa vipula vītadoṣa namāmy aham |",
  "SA05n871:14": "7. durdāntadamaka sarvya śuddha śauddhodani munim",
  "SA05n871:15": "sugata sugati saumya śubhrakīrtti namāmy aham |",
  "SA05n871:16": "8. yogīśvara daśabala lokajña lokapūjitam",
  "SA05n871:17": "lokācāryya nirācāryya lokanātha namāmy aham |",
  "SA05n871:18": "9. kalaṅkamukta kāmārim akalaṅka kalādharam",
  "SA05n871:19": "kāntamūrtti dayāpātra kanakābha namāmy aham |",
  "SA05n871:20": "10. paramārttha parajyoti parama parameśvaram",
  "SA05n871:21": "bhavābhavakara bhavya bhagavanta namāmy aham |",
  "SA05n871:22": "11. mahāmati mahāvīryya mahābhijña mahābalam",
  "SA05n871:23": "mahodyama mahādhairyya mahābāhu namāmy aham |",
  "SA05n871:24": "12. ādya pavitra sarvīyam aparājitam acyutam",
  "SA05n871:25": "mita parahita nātham amitābha namāmy aham |",
  "SA05n871:26": "13 | catur-mārārivijita tatvajña śaṅkara śivam",
  "SA05n871:27": "satvasāra sadācāra sārtthavāha namāmy aham |",
  "SA05n871:28": "14. devadeva mahādeva devavanditam avyayam",
  "SA05n871:29": "pramāṇātītadeveśa divyarūpa namāmy aham |",
  "SA05n871:30": "15. jitendriya jitakleśa jinendra puruṣottamam",
  "SA05n871:31": "uttama sattama brāhma puṇyakṣetra namāmy aham |",
  "SA05n871:32": "16. bhaktyeda yaḥ paṭhen nitya prātar utthāya mānavaḥ",
  "SA05n871:33": "nāmāṣṭaśataka puṇya pavitra pāpanāśanam,",
  "SA05n871:34": "17. sa labhetamitān bhogān bhaumān svargodbhvās tathā",
  "SA05n871:35": "vyādhayas ta na bādhante duḥsvapna tasya naśyati |",
  "SA05n871:36": "18. āyurārogyasampannas sarvaiśvaryyasamanvitaḥ",
  "SA05n871:37": "medhāvī kulajo vāgmī bhavej janmani janmani |",
  "SA05n871:38": "nāmāṣṭaśatakaya nimi |"
}