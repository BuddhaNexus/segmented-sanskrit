{
    "1004:0": "dvitīyaḥ paricchedaḥ",
    "1004:1": "munivratasamāśrayaḥ",
    "1004:2": "evaṃ dṛḍhamahābodhisamādāno jagaddhite |",
    "1004:3": "pratirūpaṃ pratipadaṃ pratipanno virājate ||1||",
    "1004:4": "sa maitryāpratighātinyā kāruṇyena prasarpiṇā |",
    "1004:5": "saddharmādhigamātṛpto dharmadāne vimatsaraḥ ||2||",
    "1004:6": "ṛjunāhatamānena manasā tattvadarśinā |",
    "1004:7": "paradoṣekṣaṇāndhena svadoṣāpattibhīruṇā ||3||",
    "1004:8": "vivādalokasaṃsargalokāyataparāṅmukhaḥ |",
    "1004:9": "nirguṇe&#39;pi guṇāghānapratataḥ sraṃsitādaraḥ ||4||",
    "1004:10": "kṛpodbhūtena dānena sarvajñatvagataspṛhaḥ |",
    "1004:11": "sarvasya janakāyasya sarvaduḥkhopaśāntaye ||5||",
    "1004:12": "śīlāmalajalasnāyī kṣamāsitapavitrakaḥ |",
    "1004:13": "vīryabaddhajaṭābhāro dhyānajñānaparāyaṇaḥ ||6||",
    "1004:14": "samunmiṣitadhīnetraḥ śāstralokajñatāpaṭuḥ |",
    "1004:15": "hnīvyavatrāpyavasanaḥ sauratyatanubandhanaḥ ||7||",
    "1004:16": "kṛpākṛṣṇājinadharaḥ śraddhāmalakamaṇḍaluḥ |",
    "1004:17": "smṛtiguptendriyadvāro dhṛtivetrāsanāsanaḥ ||8||",
    "1004:18": "mahāyānamahāramyatapovanasamāśrayaḥ |",
    "1004:19": "dhyānaprītiphalāhāraḥ smṛtyupasthānagocaraḥ ||9||",
    "1004:20": "gambhīrodārasūtrāntasvādhyāyahatakilbiṣaḥ |",
    "1004:21": "pratītyotpādasāvitrīṃ japan satyadvayāśrayāt ||10||",
    "1004:22": "varṇāḍhyaiḥ pratipatpuṣpaiḥ sarvadiggandhavāhibhiḥ |",
    "1004:23": "upāsīnastvaharahaḥ samyaksaṃbuddhabhāskaram ||11||",
    "1004:24": "hutākuśalasaṃkalpaḥ pratisaṃkhyānapāvake |",
    "1004:25": "munivrataṃ caredevamanuttarapadāptaye ||12||",
    "1004:26": "munivratasamāśrayo nāma dvitīyaḥ paricchedaḥraddhāmalakamaṇḍaluḥ |",
    "1004:27": "smṛtiguptendriyadvāro dhṛtivetrāsanāsanaḥ ||8||",
    "1004:28": "mahāyānamahāramyatapovanasamāśrayaḥ |",
    "1004:29": "dhyānaprītiphalāhāraḥ smṛtyupasthānagocaraḥ ||9||",
    "1004:30": "gambhīrodārasūtrāntasvādhyāyahatakilbiṣaḥ |",
    "1004:31": "pratītyotpādasāvitrīṃ japan satyadvayāśrayāt ||10||",
    "1004:32": "varṇāḍhyaiḥ"
}