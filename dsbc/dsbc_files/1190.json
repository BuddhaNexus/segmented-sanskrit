{
    "1190:0": "3. kṣāntipāramitāsamāsaḥ",
    "1190:1": "saṃmohanīṃ manmathapakṣamāyāṃ",
    "1190:2": "prāhuḥ sukhāṃ caiva vimokṣamāyām|",
    "1190:3": "tasyāṃ na kuryāt kaiva kṣamāyāṃ",
    "1190:4": "prayatnamekāntahitakṣamāyām || 1 ||",
    "1190:5": "parāparādheṣu sadānabhijñā",
    "1190:6": "vyavasthitiḥ sattvavatāṃ manojñā|",
    "1190:7": "guṇābhinirvartitacārusaṃjñā",
    "1190:8": "kṣameti lokārthacarī kṛpājñā || 2 ||",
    "1190:9": "parārthamabhyudyatamānasānāṃ",
    "1190:10": "dīkṣāṃ titikṣāṃ prathamāṃ vadanti|",
    "1190:11": "seturjalānīva hi roṣadoṣaḥ",
    "1190:12": "śreyāṃsi lokasya samāvṛṇoti||3||",
    "1190:13": "alaṃkriyā śaktisamanvitānāṃ",
    "1190:14": "tapodhanānāṃ balasaṃpadagrā|",
    "1190:15": "vyāpādadāvānalavāridhārā",
    "1190:16": "pretyeha ca kṣāntiranarthaśāntiḥ || 4 ||",
    "1190:17": "kṣamāmaye varmaṇi sajjanānāṃ",
    "1190:18": "vikuṇṭhitā durjanavākyabāṇāḥ|",
    "1190:19": "prāyaḥ praśaṃsākusumatvametya",
    "1190:20": "tatkīrtimālāvayavā bhavanti || 5 ||",
    "1190:21": "pratikriyā durjanavāgviṣāṇāṃ",
    "1190:22": "prahlādanī jñānaniśākarābhā|",
    "1190:23": "dhīraprakārā prakṛtiryatīnāṃ",
    "1190:24": "kṣāntirguṇānām adhivāsabhūmiḥ || 6 ||",
    "1190:25": "sattvasya gāmbhīryamayasya sāro",
    "1190:26": "ghanāgamaḥ krodhanidāghaśāntyai|",
    "1190:27": "vyatītavelasya guṇārṇavasya",
    "1190:28": "vyāpī svanaḥ kṣāntimayo'bhyudeti||7||",
    "1190:29": "ā brahmalokādadhirohāṇārthā",
    "1190:30": "sopānapaṅktirgatakhedadoṣā|",
    "1190:31": "karmāntaśālā guṇaśībharasya",
    "1190:32": "rūpasya sallakṣaṇabhūṣaṇasya || 8 ||",
    "1190:33": "unmūlanī vairaphalācitānāṃ",
    "1190:34": "kṣamāsariddoṣamahādrumāṇām|",
    "1190:35": "saṃbodhicittasya vivardhitasya",
    "1190:36": "guṇāmburaśeḥ satatānukūlā || 9 ||",
    "1190:37": "śubhā paratrāpi hite samṛddhirjaga-",
    "1190:38": "ddhitārthasya parā vivṛddhiḥ|",
    "1190:39": "śubhasvabhāvātiśayaprasiddhiḥ",
    "1190:40": "kṣāntirmanaḥkāyavacoviśuddhiḥ || 10 ||",
    "1190:41": "saṃsāradoṣairna ca cchedameti",
    "1190:42": "sattvān kṛpāsnigdhamavekṣamāṇaḥ|",
    "1190:43": "satkarmabhirlokahitaiḥ samantād",
    "1190:44": "yaśomayatvaṃ vrajatīva loke || 11 ||",
    "1190:45": "na spṛśyate vismayavācyadoṣairjñā-",
    "1190:46": "nāvadānena titikṣureva|",
    "1190:47": "anityatākṣāntibalodayācca",
    "1190:48": "praharṣamāyāti sukhe'pi naiva || 12 ||",
    "1190:49": "saṃkocamāyāti na cāyaśobhirvi-",
    "1190:50": "sāriṇā kṣāntibalaśrayeṇa|",
    "1190:51": "ataśca śeṣairapi lokadharmairani-",
    "1190:52": "śritatvānna sa cāpalīti || 13 ||",
    "1190:53": "tīvraprakārairapi viprakārairna",
    "1190:54": "vikriyāṃ yānti satāṃ manāṃsi|",
    "1190:55": "dṛḍhābhilāṣāṇi munīndrabhāve",
    "1190:56": "kṣāntyā balādhānasusaṃskṛtāni || 14 ||",
    "1190:57": "sa kṣāntidhīreṇa ca mānasena",
    "1190:58": "kaṣṭāni saṃdarśayate tapāṃsi|",
    "1190:59": "darponnatiṃ tīrthakṛtāṃ manaḥsu",
    "1190:60": "nīcaiḥ kariṣyan hitakāmyayaiva || 15 ||",
    "1190:61": "loko'yamātmābhiniveśasamūḍhaḥ",
    "1190:62": "śeṣān parānityabhimanyamānaḥ|",
    "1190:63": "tadviprakārairabhibhūtacetā<ḥ>",
    "1190:64": "kṣamāviyogāt parikhedameti || 16 ||",
    "1190:65": "kṛpāsanāthāni satāṃ manāṃsi",
    "1190:66": "kṣāntyā kṛtasvastyayanakriyāṇi|",
    "1190:67": "naṣṭātmadṛṣṭiṇi parāpakārān",
    "1190:68": "na vikriyāṃ yānti guṇānurāgāt || 17 ||",
    "1190:69": "mithyāvikalpo hṛdayajvarasya",
    "1190:70": "krodhasya heturdhṛtidurbalānām|",
    "1190:71": "samyagvikalpastu samādadhāti",
    "1190:72": "kṣāntiprakārāṃ manasaḥ praśāntim || 18 ||",
    "1190:73": "vikalpasanniśrayasaṃśritāyāṃ",
    "1190:74": "kṣāntyāṃ na tu syāccalitāvakāśaḥ|",
    "1190:75": "pratyūṣavātasphurite'mbhasīva",
    "1190:76": "saṃpūrṇacandrapratibimbalakṣayāḥ || 19 ||",
    "1190:77": "vikalpaśāntiṃ paramārthatastu",
    "1190:78": "kṣāntiṃ kṣamātattvavido vadanti|",
    "1190:79": "tasmādvikalpopaśame yateta",
    "1190:80": "svapnopamaṃ lokamavekṣamāṇaḥ || 20 ||",
    "1190:81": "cakṣuḥ kim ākrośati cakṣure-",
    "1190:82": "tacchrotrādi vākrośati kiṃ tadādi|",
    "1190:83": "yaivaṃ kṣamā sāyatanānvavekṣā",
    "1190:84": "na kṣāntireṣā paramārthatastu || 21 ||",
    "1190:85": "vaktā vacaścaitadanityameva",
    "1190:86": "śrutirvikalpo'pi ca yo mamāyam|",
    "1190:87": "anityabhāvapravikalpanaiṣā",
    "1190:88": "na kṣāntimetām paramāṃ vadanti || 22 ||",
    "1190:89": "kartāpakārasya na kaścidasti",
    "1190:90": "naivāsti kaścitkriyāte ca yasya|",
    "1190:91": "nairātmasaṃdarśanasiddhireṣā",
    "1190:92": "na kṣāntireṣāpi gataprakarṣā || 23 ||",
    "1190:93": "tattatpratītya prabhavanti bhāvā",
    "1190:94": "nindāpraśaṃsāsukhaduḥkhasaṃjñāḥ|",
    "1190:95": "pratītyasiddheravatārabhūmirna",
    "1190:96": "kṣāntiratyantasamāhitaiṣā || 24 ||",
    "1190:97": "yadyesā saṃmohamahāgraheṇa",
    "1190:98": "paryastacetā nanu nāhamevam|",
    "1190:99": "ityunnate cāvanate ca citte",
    "1190:100": "kṣāntiprakarṣasya kuto'vakāśaḥ || 25 ||",
    "1190:101": "pradhvaṃsinī varṇalavapratiśru-",
    "1190:102": "dyantrādivaikaikaśa uccarantī|",
    "1190:103": "kuryāṃ kathaṃ kasya ca kāṃ ca pīḍām",
    "1190:104": "eṣāpi na kṣāntiratiprakṛṣṭā || 26 ||",
    "1190:105": "yadyesā matpāpaparikṣayārthaṃ",
    "1190:106": "na vīkṣate svāmapi dharmapīḍām|",
    "1190:107": "asmān na kalyāṇataraṃ hi mitram",
    "1190:108": "asāvapi kṣāntyupacārā eva || 27 ||",
    "1190:109": "karmasvatāṃ eva hi vīkṣamāṇasti-",
    "1190:110": "tikṣate tadguṇadarśanācca|",
    "1190:111": "naivaṃprakārāpi hi naiṣṭhikatvaṃ",
    "1190:112": "kṣāntirvikalpopahatā prayāti || 28 ||",
    "1190:113": "anityaduḥkhāśuciniḥsvabhāvatā",
    "1190:114": "mama kṣamante na tu tadviparyayāḥ|",
    "1190:115": "iyaṃ vipakṣapraśamakṣamā kṣamā",
    "1190:116": "dvayapravṛtterna tu pāramārthikī || 29 ||",
    "1190:117": "ayatnatattvārthavicakṣaṇo janaḥ",
    "1190:118": "paropakāreṣu yataḥ pravartate|",
    "1190:119": "kṣamā na caivaṃ samatāṃ sameti yā",
    "1190:120": "yataḥ kṣamaivaṃ na vikalpanakṣayā || 30 ||",
    "1190:121": "nirodham āyānti yadā tvaśeṣatāḥ",
    "1190:122": "samādhikanyūnavikalpanakramāḥ|",
    "1190:123": "anuttarāṃ kṣāntimamānagocarāṃ",
    "1190:124": "vadanti tāmadvāyamārgacāriṇāḥ || 31 ||",
    "1190:125": "svataḥ parasmādubhayādahetuto",
    "1190:126": "yathā na bhāvāḥ prabhavanti ke cana|",
    "1190:127": "svataḥ parasmād ubhayād ahetutastathā",
    "1190:128": "na bhāvā vibhavanti ke cana || 32 ||",
    "1190:129": "naṣṭād anaṣṭād ubhayāc na nobhayān",
    "1190:130": "na jātu kāryaṃ khalu vidyate kva cit|",
    "1190:131": "tathāpi kāryaṃ samudeti vastuno",
    "1190:132": "yetthaṃ kṣamā sā dvayavarjitā kṣamā || 33 ||",
    "1190:133": "sato'sato vāsti na janma janmanā",
    "1190:134": "vinā nirodho'pi na kasya cit kva cit|",
    "1190:135": "svabhāvaśūnyāmiti bhāvakalpanāṃ",
    "1190:136": "vipaśyataḥ kṣāntirudeti naiṣṭhikī || 34 ||",
    "1190:137": "avāpya yāṃ vyākriyate sahasraśo",
    "1190:138": "jinairasau nāma jino bhaviṣyati|",
    "1190:139": "pravartate lokahitakriyāvidhiḥ",
    "1190:140": "samāhitasyaiva ca tasya sarvadā || 35 ||",
    "1190:141": "yāvacca bhāvābhiniviṣṭabuddhiratra",
    "1190:142": "dvayaṃ tāvadupaiti mohāt|",
    "1190:143": "tathānimittaṃ ca vimokṣaheturdure",
    "1190:144": "bhavatyasya yathā kṣiteḥ kham || 36 ||",
    "1190:145": "upaiti dharmapraṇidhānakarmasu",
    "1190:146": "prabhutvamṛddhāvadhimuktijanmasu|",
    "1190:147": "tathā pariṣkāravidhau svacetasi",
    "1190:148": "prakarṣiṇi jñānabale tathāyuṣi || 37 ||",
    "1190:149": "avāpya caitadvaśitāmayaṃ dhanaṃ",
    "1190:150": "prakṛṣṭaṃ akṣiṣṇu parārthasādhanam|",
    "1190:151": "janasya kṛcchreṣu patiṣyataḥ sataḥ",
    "1190:152": "sa jāyate dhāraṇakāraṇaṃ vibhuḥ || 38 ||",
    "1190:153": "tasmāt parārthamahatīṃ dhuramudvahadbhiḥ",
    "1190:154": "kṣānterupāyavidhireṣa sadānugamyaḥ|",
    "1190:155": "atra sthitasya hi bhavanti parārthacittāḥ",
    "1190:156": "sarvā<ḥ> kriyā guṇaphalābharaṇābhirāmāḥ || 39 ||",
    "1190:157": "asyāṃ hi bhaktirapi yā pravirūḍhamūlā",
    "1190:158": "tāmabhyasanti munayo munirājabhāve|",
    "1190:159": "śraddhānuviddhamanasāṃ na hi dharmamārge",
    "1190:160": "dṛṣṭo manoratharathasya yato'kṣabhaṅgaḥ || 40 ||",
    "1190:161": "|| kṣāntipāramitāsamāsaḥ ||"
}