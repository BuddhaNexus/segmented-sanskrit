{
  "S04n269:0": "āryatriratnānusmṛtisūtram",
  "S04n269:1": "(kha) saṃskṛtapāṭhaḥ",
  "S04n269:2": "bhāratīyabhāṣāyām-āryatriratnānusmṛtisūtram",
  "S04n269:3": "bhoṭabhāṣāyām-phags-pā-dakon-mcchog-gsum-jes-su-ḍran-pāī-mdo",
  "S04n269:4": "namaḥ sarvabuddhabodhisattvebhyaḥ",
  "S04n269:5": "(buddhānusmṛtiḥ)",
  "S04n269:6": "ityapi buddho bhagavāṃstathāgato'rhan samyaksaṃbuddho vidyācaraṇasampannaḥ sugato lokavidanuttaraḥ puruṣadamyasārathiḥ śāstā devamanuṣyāṇāṃ buddho bhagavāniti |",
  "S04n269:7": "niṣyandaḥ sa tathāgataḥ puṇyānām,",
  "S04n269:8": "avipraṇāśaḥ kuśalamūlānām,",
  "S04n269:9": "alaṅkṛtaḥ kṣāntyā,",
  "S04n269:10": "ālayaḥ puṇyanidhānānām,",
  "S04n269:11": "citrito'nuvyañjanaiḥ kusumito lakṣaṇaiḥ,",
  "S04n269:12": "pratirūpo gocareṇa,",
  "S04n269:13": "apratikūlo darśanena,",
  "S04n269:14": "abhiratiḥ śraddhā(śuddhā)",
  "S04n269:15": "dhimuktānām,",
  "S04n269:16": "anabhibhūtaḥ prajñayā,",
  "S04n269:17": "anavamardanīyo balaiḥ,",
  "S04n269:18": "śāstā sarvasattvānām,",
  "S04n269:19": "pitā bodhisattvānām,",
  "S04n269:20": "rājā āryapudgalānām,",
  "S04n269:21": "sārthavāhaḥ nirvāṇanagarasamprasthitānām,",
  "S04n269:22": "aprameyo jñānena,",
  "S04n269:23": "acintyaḥ pratibhānena,",
  "S04n269:24": "viśuddhaḥ svareṇa,",
  "S04n269:25": "āsvadanīyo ghoṣeṇa,",
  "S04n269:26": "asecanako rūpeṇa,",
  "S04n269:27": "apratisamaḥ kāyena,",
  "S04n269:28": "aliptaḥ kāmaiḥ,",
  "S04n269:29": "anupalipto rūpaiḥ asaṃsṛṣṭa ārūpyaiḥ,",
  "S04n269:30": "vipramuktaḥ skandhebhyaḥ,",
  "S04n269:31": "visamprayukto dhātubhiḥ,",
  "S04n269:32": "saṃvṛta āyatanaiḥ,",
  "S04n269:33": "pracchinno granthaiḥ,",
  "S04n269:34": "vimuktaḥ paridāghnaiḥ,",
  "S04n269:35": "parimuktastṛṣṇayā,",
  "S04n269:36": "oghāduttīrṇaḥ paripūrṇo jñānena,",
  "S04n269:37": "pratiṣṭhito'tītānāgatapratyutpannānāṃ buddhānāṃ bhagavatāṃ jñāne,",
  "S04n269:38": "apratiṣṭhito nirvāṇe,",
  "S04n269:39": "sthito bhūtakoṭyām,",
  "S04n269:40": "sthitaḥ sarvasattvālokanīyāyāṃ bhūmau,",
  "S04n269:41": "sarva ime tathāgatānāṃ viśeṣataḥ samyag guṇāḥ |",
  "S04n269:42": "(dharmānusmṛtiḥ)",
  "S04n269:43": "saddharmastu ādau kalyāṇaḥ,",
  "S04n269:44": "madhye kalyāṇaḥ,",
  "S04n269:45": "paryavasāne kalyāṇaḥ,",
  "S04n269:46": "svarthaḥ suvyañjanaḥ,",
  "S04n269:47": "kevalaḥ,",
  "S04n269:48": "paripūrṇaḥ,",
  "S04n269:49": "pariśuddhaḥ,",
  "S04n269:50": "paryavadātaḥ,",
  "S04n269:51": "svākhyātaḥ bhagavato dharmaḥ,",
  "S04n269:52": "sāndṛṣṭikaḥ,",
  "S04n269:53": "nirjvaraḥ,",
  "S04n269:54": "ākālikaḥ,",
  "S04n269:55": "aupanāyikaḥ,",
  "S04n269:56": "aihipaśyikaḥ,",
  "S04n269:57": "pratyātmavedanīyo vijñaiḥ,",
  "S04n269:58": "svākhyāto bhagavato dharmavinayaḥ supraveditaḥ nairyāṇikaḥ,",
  "S04n269:59": "saṃbodhigāmī,",
  "S04n269:60": "abhinnaḥ saṃstūpaḥ,",
  "S04n269:61": "sapratiśaraṇaḥ,",
  "S04n269:62": "chinnaplotikaḥ |",
  "S04n269:63": "(saṃghānusmṛtiḥ)",
  "S04n269:64": "supratipanno bhagavata āryasaṃghaḥ,",
  "S04n269:65": "nyāyapratipannaḥ,",
  "S04n269:66": "ṛjupratipannaḥ,",
  "S04n269:67": "sāmīcīpratipannaḥ,",
  "S04n269:68": "añjalīkaraṇīyaḥ,",
  "S04n269:69": "sāmīcīkaraṇīyaḥ,",
  "S04n269:70": "puṇyaśrīkṣetraḥ,",
  "S04n269:71": "mahādakṣiṇāpariśodhakaḥ,",
  "S04n269:72": "prāhavanīyaḥ,",
  "S04n269:73": "āhavanīyaḥ |",
  "S04n269:74": " || āryatriratnānusmṛtisūtraṃ samāptam ||"
}