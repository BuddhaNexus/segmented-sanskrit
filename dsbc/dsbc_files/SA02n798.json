{
  "SA02n798:0": "Ḍākinījālasaṃvararahasyam",
  "SA02n798:1": "anaṅgayogipraṇītam",
  "SA02n798:2": "om namaḥ śrīvajrayoginyai",
  "SA02n798:3": "praṇīpatya jagannāthaṃ dākinījālasaṃvaram |",
  "SA02n798:4": "rahasyaṃ paramaṃ guhyāṃ likhyate'naṅgayoginā || 1 ||",
  "SA02n798:5": "trividhā laukikī siddhiḥ kṣarasukhena deśitā |",
  "SA02n798:6": "akṣarā tu varā siddhirjñātavya (vyā)",
  "SA02n798:7": "tattvakāṅkṣiṇā || 2 ||",
  "SA02n798:8": "samayasattvakāṅkṣibhiḥ samayasattvāna (nāṃ)",
  "SA02n798:9": "laukikā (ka)",
  "SA02n798:10": "lokottarā (ra)",
  "SA02n798:11": "siddhisādhanāya catvārī'bhiṣekāḥ śreṣṭhatvena prakīrtitāḥ |",
  "SA02n798:12": "kumbho guhyābhiṣeka śca prajñājñānābhidhānakaḥ |",
  "SA02n798:13": "punareva mahāprajñā tasyā jñānabhidhānakaḥ || 3 ||",
  "SA02n798:14": "kumbhaśabdena stanī ucyete |",
  "SA02n798:15": "tayoḥ sparśanād yat kṣaraṃ kṣarasukham ,",
  "SA02n798:16": "sa kalaśābhiṣekaḥ |",
  "SA02n798:17": "guhyāvajrapraveśād yat kṣarasukhaṃ sa guhyābhiṣekaḥ |",
  "SA02n798:18": "padhme vajraspharaṇād yat kṣarasukhaṃ sa prajñābhiṣekaṃ |",
  "SA02n798:19": "mahāmudrānurāgeṇa yadakṣaraṃ sukhaṃ caturtha tatpunastathābhiṣekaḥ saṃvarasiddhaye sandhyābhāṣayā coktaṃ (kto) bhagavatā |",
  "SA02n798:20": "lokottarasiddhisādhanātha catvāro brahyāvihārā bhāvanīyā maitryādikrameṇa tu |",
  "SA02n798:21": "tatra trayo lokasaṃvṛtyādyuktā bhagavatā |",
  "SA02n798:22": "premātiśayena kumbhasya sparśanād maitrī |",
  "SA02n798:23": "guhyo vajrapraveśāt tataḥ samadhikatayā karuṇā |",
  "SA02n798:24": "muditā hṛṣṭacittatayā padhme vajrasphāraṇāt |",
  "SA02n798:25": "upekṣā iti aśeṣakalpanākalaṅkāpagamanāt |",
  "SA02n798:26": "śuddhalaukikalpalyā (lya)",
  "SA02n798:27": "rtha ca taccaturtha lokottaramiti nispandasukhatvād [iti] bhagavato niyamaḥ |",
  "SA02n798:28": "tathā coktam",
  "SA02n798:29": "paramākṣarayogena sādhayet siddhimuttamām |",
  "SA02n798:30": "sādhite cittavajre tu tannāsti yanni (nna)",
  "SA02n798:31": "siddhayati ||",
  "SA02n798:32": "dvividhaṃ cittavajraṃ tu piṇḍacittaṃ prakāśaṃ ceti |",
  "SA02n798:33": "piṇḍacittaṃ karmamudrādhyānam ,",
  "SA02n798:34": "prakāśaṃ mahāmudreti |",
  "SA02n798:35": "etacca sadgurupadeśato'vagantavyamiti |",
  "SA02n798:36": "saṃdhī (dhā) rya mūlapadhmendu (nduṃ)",
  "SA02n798:37": "kuṇḍalī mahayogataḥ |",
  "SA02n798:38": "cittaṃ vicitratāmeti gurupadaprasādataḥ ||4 ||",
  "SA02n798:39": "laukikasiddhisādhanāya trividhā lokasaṃvṛtti (ti) rityukta |",
  "SA02n798:40": "bhagavatā ekasminneva vajradehe ekatraivānande ānandāśrcatvāra upadarśitāḥ |",
  "SA02n798:41": "tatra kāyānandaḥ (nda)",
  "SA02n798:42": "vāgānandaḥ (nda)",
  "SA02n798:43": "cittānandaḥ (nda)",
  "SA02n798:44": "jñānānandaḥ (nda) bhedeneti |",
  "SA02n798:45": "evaṃvidhabindavo'pi jñātavyāḥ |",
  "SA02n798:46": "iha trividhaḥ kṣarasukhanayo varṇītaḥ |",
  "SA02n798:47": "amṛtāsvādane samaya sevādikena ca laukikasiddhisadhanayeti |",
  "SA02n798:48": "iti bhagavato niyamaḥ |",
  "SA02n798:49": "ata evoktam ''caturtho jñānasaṃśuddhiḥ kāyavakcittasaṃśodhakaḥ '' iti |",
  "SA02n798:50": "tatha coktam",
  "SA02n798:51": "darśanasparśanābhyāṃ ca śravaṇasmaraṇena ca |",
  "SA02n798:52": "mucyate sarvapāpaistu evameva na saṃśayaḥ ||",
  "SA02n798:53": "udghāṭanīyaguhyāsaṃvaraḥ sandhyābhāṣayā coktaṃ (ktaḥ) |",
  "SA02n798:54": "darśanamiti cumbana maliṅganam |",
  "SA02n798:55": "sparśanamiti kamale vajrapraveśanam |",
  "SA02n798:56": "śravaṇamiti kuliśasphālanena yat kṣaraṃ sukham |",
  "SA02n798:57": "smaraṇamiti guruvacanaiḥ saha mohitaḥ ?",
  "SA02n798:58": "ato mucyate sarva",
  "SA02n798:59": "pāpaistu evameva na saṃśayaḥ |",
  "SA02n798:60": "samayasyākhaṇḍanādakṣara sukheneti bhagavato niyamaḥ |",
  "SA02n798:61": "tatha coktamabhidhānottare “samāhito japenmantraṃ samayācārata [tpara]ḥ'' prāṇāyāḥ sphāraṇaṃ bodhicittasya buddhabimbaṃ (mba)",
  "SA02n798:62": "sphāraṇamiti |",
  "SA02n798:63": "“ tatpunastatheti ,",
  "SA02n798:64": "tatpunastatheti ,",
  "SA02n798:65": "akṣarāṇi (di)",
  "SA02n798:66": "spandādi guṇairmuktaścaturtha [sa] tatpunastathāśabdena sahajā (ja)",
  "SA02n798:67": "mityuktaṃ bhagavatā |",
  "SA02n798:68": "iha laukikī siddhiriti |",
  "SA02n798:69": "pātāla bhūcara khecara laukikaśabdena yatkiñcit sādhyate,",
  "SA02n798:70": "tatsarva laukikasiddhiphalam adhamamadhyamottamamiti |",
  "SA02n798:71": "tasmat ki te [na] sādhitena ,",
  "SA02n798:72": "yena jātijarāmaraṇakṣayahetubhūtaṃ buddhatvaṃ na bhavati yoginām |",
  "SA02n798:73": "ata eva kāyasiddhirbhavatinī yati (rbhāvanīyeti )",
  "SA02n798:74": "bhagavatoktā (ktam) |",
  "SA02n798:75": "antargatena manaseti |",
  "SA02n798:76": "idaṃ vajrapade ca pañcavidhā (daṃ ca pañcavidhaṃ )",
  "SA02n798:77": "trisāhasrike śrīsamāje buddho bhagavānāha",
  "SA02n798:78": "vajraparyaṅkataścittaṃ maṇyantargatamīkṣe (kṣaye) t |",
  "SA02n798:79": "niṣpandādi sukhāpūrṇa vaimalyaṃ yāvadeti tat ||",
  "SA02n798:80": "tathā coktam",
  "SA02n798:81": "bhage liṅgaṃ pratiṣṭhāpya bodhicittaṃ na cotsṛjet |",
  "SA02n798:82": "bhāvayed buddhabimbaṃ tu traidhatukamaśeṣataḥ || iti ||",
  "SA02n798:83": "ihānena gāthādvayenāsya vajrapadasya piṇḍārtho'vagantavya iti |",
  "SA02n798:84": "vajraparyaṅkaśabdena saṃdhyābhāṣayā padhmamityuktaṃ bhagavatā |",
  "SA02n798:85": "tasmin maṇyantargatamiti |",
  "SA02n798:86": "vajrasya maṇau madhye catubinddhātmakaṃ cittavajraṃ yadā bhavati ,",
  "SA02n798:87": "tadāvajraparyaṅkataścittaṃ maṇyantargata mityucyate |",
  "SA02n798:88": "nispandādiśabdena sandhābhāṣayā svā |||||",
  "SA02n798:91": "bhaprajñāyāmamṛtakuṇḍalyā''",
  "SA02n798:92": "śleṣitaṃ ṣoḍaśānandātmakaṃ sukhamaya [ma] avadhūtyāṃ saṃdhāraṇena nābhihṛtkaṇṭhalalāṭo ṣṇīṣakamalaparyantaṃ yāva [de] toti vaimalyaṃ yāvadeti |",
  "SA02n798:93": "tada (bhya) syāyamartha iti |",
  "SA02n798:94": "catuṣpīṭhe coktam '' mantrādātmapīṭham ,",
  "SA02n798:95": "ātmapīṭhātparapīṭham ,",
  "SA02n798:96": "ātmapīṭhātparapīṭham ,",
  "SA02n798:97": "parapīṭhāttattvapīṭham ,",
  "SA02n798:98": "yāvadeti taditibodhicittam avadhūtyāṃ saṃvareṇa iti padasaṃcārakramaḥ |",
  "SA02n798:99": "'' śrīcakrasaṃvare punargāthādvayenoktamiti |",
  "SA02n798:100": "iha maṇyantantargataṃ tyajya bodhicittamantargataṃ mana ityucyate |",
  "SA02n798:101": "tenāntargatena manasā acyutabodhicittena karmamudrāprasaṅgena jñānamudrāprasaṅgena sthiracarasvabhāvātmakaṃ sarvākaravaropetaṃ bhāvayedaśeṣatai (to) yogī |",
  "SA02n798:102": "tadeva prajñāpāramitā sarvākāravaropetā śunyatā ca ,",
  "SA02n798:103": "sā śrīsaṃvarottare kāmasiddhirityuktā bhagavatā ,",
  "SA02n798:104": "prajñātantratvāditi |",
  "SA02n798:105": "ata evoktaṃ bhagavatā '' paramākṣarayogena mahāmudrāṃ vibhāvayet '' |",
  "SA02n798:106": "tathā cāha “ kāmasidhi vibhāvayeda yogī'' |",
  "SA02n798:107": "kāmo mahārāgaḥ |",
  "SA02n798:108": "sa eva vajrasattvaḥ paramākṣarasukha iti |",
  "SA02n798:109": "tathā ca vajrapāṇiṃ bhagavānāha '' cutikṣaraṇā (ṇa)",
  "SA02n798:110": "nirodhena buddhatvaṃ sarvadehinām |",
  "SA02n798:111": "'' ato jagati jarāmaraṇanirodha iti |",
  "SA02n798:112": "tathā coktaṃ vajragarbheṇa '' pūjāvidhirmulatantroktaḥ yathā prajñopāyavidhānena pūjayed yogavit sadā '' ( a |",
  "SA02n798:113": "si |",
  "SA02n798:114": "57 , he |",
  "SA02n798:115": "taṃ | 1 | 52 ) |",
  "SA02n798:118": "yoga iti caṇḍālī śuklayoraikyam |",
  "SA02n798:119": "tasmāttannivartate |",
  "SA02n798:120": "[ta] mīśvaraṃ tato brahyācaryeṇākṣarasukhena prajñopāyavidhānena pūjayed yogavit sadā sarvasminneva kāle'cyuta sukheneti |",
  "SA02n798:121": "'' sevitavyā [ḥ] prayetnena yathā bhedo na jāyate |",
  "SA02n798:122": "'' (he |",
  "SA02n798:123": "taṃ | 15 |",
  "SA02n798:125": "3 ) bhede nītārthe śukracyavanamiti samayabhedena nirayagamanamityuktaṃ bhagavatā svayaṃ śrīcakrasaṃvare ādibuddhe ca",
  "SA02n798:126": "cyutehi (rvi)",
  "SA02n798:127": "rāgasaṃbhūtivirāgāt duḥkhasaṃbhavaḥ |",
  "SA02n798:128": "duḥkhādvātukṣayaṃ puṃsāṃ kṣayānmṛtyuriti smṛtaḥ ||",
  "SA02n798:129": "kimataḥ paraṃ nirayagamanamiti |",
  "SA02n798:130": "tathā coktaṃ hagavatā cakrasaṃvare '' saṃvṛtyā satvā adhoretasaḥ ,",
  "SA02n798:131": "vivṛtyā ūdhrvaretasaḥ '' |",
  "SA02n798:132": "''brahyā nivarti ( vṛṃti )",
  "SA02n798:133": "to buddhaḥ '' (he |",
  "SA02n798:134": "taṃ | 1 | 5 13) |",
  "SA02n798:137": "dhātvāśrāvatvāt svaṃśarīre kṣayād brahyo nirgamābhāvād brahyā vairocano buddho bhaṇyate |",
  "SA02n798:138": "''vināśād (viṣaṇād)",
  "SA02n798:139": "viṣṇurucyate '' |",
  "SA02n798:140": "mūtra dhātoraśrāvatvāt svaśarīre viśanā (ṣaṇā)",
  "SA02n798:141": "d bāhyo nirgamābhāvād buddho viṣṇurucyate |",
  "SA02n798:142": "''śivaḥ sadā sukalyāṇāt '' iti |",
  "SA02n798:143": "kalyāṇamaṇḍala śīlaṃ (la)",
  "SA02n798:144": "śukrasya cyavanābhāvād buddhaḥ śiva ucyate |",
  "SA02n798:145": "''sarvaḥ sarvātmani sthitiḥ (taḥ) iti |",
  "SA02n798:146": "sarvo ratnasaṃbhavaḥ ,",
  "SA02n798:147": "sa eva raktadhātustasya cyavanābhāvād duḥkhasyābhavaḥ |",
  "SA02n798:148": "ataḥ ''sukhaduḥkhāntakṛnniṣṭhā vairāgyamupadhipakṣayaḥ '' |",
  "SA02n798:149": "sarvātmani sthito divyacakṣuṣā paracittajñānavyāpakatvād buddhaḥ sarva ucyate |",
  "SA02n798:150": "etatsarva gurupādaṃ paryupāsya krameṇa jñātavyamiti bhagavato niyamaḥ |",
  "SA02n798:151": "satata (taṃ) paṇḍitā bhimānaṃ tyakatvā sadgu [ru] sampradāyena sandhyābhāṣadikaṃ tu veditavyamiti bhagavato niyamaḥ |",
  "SA02n798:152": "ato hevajroktā ṣaḍaṅgabhāvanā kṛṣṇa rakta pīta harita nīla śuklamiti '' ṣaḍaṅgabhāvanāyogād yogī viramāntaṃ punastatheti '' ( he |",
  "SA02n798:153": "taṃ | 1 | 8 |",
  "SA02n798:156": "24 ) |",
  "SA02n798:157": "tathā coktam ṣaḍaṅgabhāvanayā nūnaṃ vajradharatvaṃ siddhayati |",
  "SA02n798:158": "śrīsamājottare bhagavānāha",
  "SA02n798:159": "pratyāhārastathā dhyānaṃ prāṇāyāmaśca (mo'tha) dhāraṇā |",
  "SA02n798:160": "anusmṛtiḥ samādhiśca ṣaḍaṅgo yoga iṣyate || (18 |140)",
  "SA02n798:161": "atra pratyāhāraśabdena traidhātukabuddhabimbadarśanam |",
  "SA02n798:162": "kuṇḍalyā saha yogataḥ |",
  "SA02n798:163": "atrāmṛtakuṇḍalīsaṃjñayā sandhyābhāṣānte vā svarityukto bhagavatā |",
  "SA02n798:164": "asya piṇḍārtha sadgurupadeśato'vagantavya iti |",
  "SA02n798:165": "dhāraṇādikena tu |",
  "SA02n798:166": "tato dhyānaṃ nāma śūnyeṣu sarvabhāveṣu cittapravṛttiḥ |",
  "SA02n798:167": "vitarko nāma bhāvagrahaṇaṃ cittasya |",
  "SA02n798:168": "vicāreṇa (ro) nāma",
  "SA02n798:169": "bhāvaprakāśaḥ |",
  "SA02n798:170": "pritītirnāma sarvabhāveṣu cittāropaṇam |",
  "SA02n798:171": "acalaṃ sukhaṃ nāma sarvabhāvebhya sukhasampattiḥ |",
  "SA02n798:172": "cittasyaikāgratā nāma bimbena sa [ha] cittasyaikīkaraṇamiti |",
  "SA02n798:173": "evaṃ pañcadhyanāṅgamucyate",
  "SA02n798:174": "vitarkaśca vicāraśca prītiścaiva sukhaṃ tathā |",
  "SA02n798:175": "cittasyaikagratā caitra pañcaite dhyānasaṃgrahāḥ ||",
  "SA02n798:176": "(gu |",
  "SA02n798:177": "sa | 18 |143)",
  "SA02n798:178": "tataḥ prāṇāyāmo nāma lalanāvāmadakṣiṇamarganirodhaḥ |",
  "SA02n798:179": "ayameva vasanta kālaḥ |",
  "SA02n798:180": "avadhūtīmadhyamāṅge prāṇavāyoḥ samapravṛttiriti |",
  "SA02n798:181": "tatranilayogenāvadhūtyāṃ saṃcāra iti |",
  "SA02n798:182": "tasya omkāreṇa uccā (cchvā)",
  "SA02n798:183": "saḥ , āḥkāreṇa niḥśvāsaḥ |",
  "SA02n798:184": "om huṃ kāreṇa nirodhaścandraravirāhusvabhāvena kurute yogī |",
  "SA02n798:185": "iti prāṇāyāmāṅgamucyate |",
  "SA02n798:186": "tato dhāraṇā nāma prāṇasya māhendravāruṇāgnivāyumaṇḍalā (le)",
  "SA02n798:187": "nābhau ktiścaiva (hṛdi kaṇṭhe)",
  "SA02n798:188": "lalāṭe praveśaḥ |",
  "SA02n798:189": "na bāhyānirgamaḥ |",
  "SA02n798:190": "indau prāṇapraveśanamiti dhāraṇāṅgamucyate |",
  "SA02n798:191": "tato'nusmṛtirnāma sveṣṭadevatādarśanaṃ pratibimbākāraṃ vikalparahitaṃ tasmādane karaśimasphuradūpākāraṃ prabhāmaṇḍalam |",
  "SA02n798:192": "tato'nekākārasphuradrapāṃ (paṃ)",
  "SA02n798:193": "traidhatukaṃ sma (spha)",
  "SA02n798:194": "raṇamiti , anusmṛtyaṅgamucyate |",
  "SA02n798:195": "tataḥ samādhirnāma iṣṭadevatānurāgād yadakṣarasukhaprāptiḥ ,",
  "SA02n798:196": "tasyāmekīkaraṇam |",
  "SA02n798:197": "grāhyāgrāhakatāvirahitaṃ cittaṃ samādhyaṅgamucyate tathāgateḥ |",
  "SA02n798:198": "iha ṣaḍaṅgabhāvanāyoge [ne] ti saṃkṣepeṇoktam ,",
  "SA02n798:199": "vistareṇa abhidhārnaparamādyatantre ca sadgurupadeśato'vagantavya iti yoginīmahāmudrāsiddhayarthineti",
  "SA02n798:200": "ṣaḍaṅgaṃ bhāvayed yogī svādhiṣṭhānamahaniśam |",
  "SA02n798:201": "drutaṃ siddhimavāpnoti uktaṃ vajrabhūtā svayam ||",
  "SA02n798:202": "(he |",
  "SA02n798:203": "ta | 1 |8 |24)",
  "SA02n798:205": "atra bhagavataḥ pratijñā",
  "SA02n798:206": "sarvacintāṃ parityajya dinamekaṃ parīkṣayet |",
  "SA02n798:207": "yadi na syāt pratyayo'tra tadetanme mṛṣā vacaḥ || iti ||",
  "SA02n798:208": "tatra pratyayo dhūmādinimittam |",
  "SA02n798:209": "prathamaṃ dhūmanimittam ,",
  "SA02n798:210": "dvitīyaṃ marīcikākāram ,",
  "SA02n798:211": "tṛtīyaṃ khadyotākāram ,",
  "SA02n798:212": "caturtha pradīpo (pa)",
  "SA02n798:213": "nimittam , pañcamaṃ nirabhragagana sannibha [ma] iti |",
  "SA02n798:214": "māyājālasamādhipaṭale prokttaṃ proktaṃ bhagavatā , tadyathā",
  "SA02n798:215": "gaganodbhavaḥ svayambhūḥ prajñājñānānalo mahān |",
  "SA02n798:216": "vairocano mahādīptirjñānajyotivirocanaḥ ||",
  "SA02n798:217": "jagatpradīpo jñānolko mahātejāḥ prabhāsvaraḥ |",
  "SA02n798:218": "vidyārājogramantreśo mantrarājo mahārthakṛt || (nā | saṃ , 61-62)",
  "SA02n798:219": "iti gāthādvayenāparaṃ nimittaṃ bhagavatokta sandhyābhāṣayā |",
  "SA02n798:220": "nirabhragagana pratibhāso yo bhavati sa gaganodhbhavaḥ |",
  "SA02n798:221": "svayambhūḥ sarvavikalparahitacittatvāditi |",
  "SA02n798:222": "atra prajñājñānānalo jñānapratibhāsaḥ |",
  "SA02n798:223": "vairocano mahādīptiriti candrapratibhāsaḥ |",
  "SA02n798:224": "sa eva jñānajyotivirocanaśca |",
  "SA02n798:225": "jagatpradīpa iti suryapratibhāsaḥ |",
  "SA02n798:226": "jñānolkā iti rāhupratibhāsaḥ |",
  "SA02n798:227": "mahātejāḥ prabhāsvara iti sūryapratibhāsaḥ |",
  "SA02n798:228": "jñānolkā iti rāhupratibhāsaḥ |",
  "SA02n798:229": "mahātejāḥ prabhāsvara iti vidyutpratibhāsaḥ |",
  "SA02n798:230": "vidyārājo'gra mantreśa iti cittapratibhāso nīlavarṇacandramaṇḍalākāraḥ |",
  "SA02n798:231": "mantrarājo mahārthakṛditi sarvākāra traidhātukapratibhāso māyāsvapnapratibhāsena tulyo dṛyate yoginī (nā)",
  "SA02n798:232": "pratyāhāreṇa |",
  "SA02n798:233": "āṣṭau mahānimittāni bhagavato niyamaḥ |",
  "SA02n798:234": "tathā coktaṃ ḍākinījāla",
  "SA02n798:235": "saṃvare bhagavatā",
  "SA02n798:236": "“ sidhyat () aśeṣaniḥ śeṣatraidhātukasthitānā devadaityamanuṣyāṇāṃ prāṇiṣu sarveṣu yāvanto dehinaḥ ()",
  "SA02n798:237": "iti , ''ṣaḍaṅga bhāvayed yogī '' iti ca bhagavato niyamaḥ |",
  "SA02n798:238": "punaścoktaṃ vajrapañjare",
  "SA02n798:239": "ṣaḍaṅgaṃbhāvayet tasmat svā[dhi] ṣṭhānasamaṃ tataḥ |",
  "SA02n798:240": "sarvāṅgasundaraṃ ramyaṃ sarvāsaṅga vivajitam ||",
  "SA02n798:241": "ramyaṃ tu ḍākinīcakraṃ svādhiṣṭhānaṃ mahādbhutam |",
  "SA02n798:242": "yadudeti kṣaṇenaiva gurupādaprasādataḥ ||",
  "SA02n798:243": "sarvabuddhasamāyogaḍākinījālasamvare śrīvajrasattva saṃyogakalpa dvitīyo (ye)",
  "SA02n798:244": "'pyuktaṃ bhagavatā",
  "SA02n798:245": "svādhiṣṭhānād bhavatyeva sarvabuddhasamāgama itī |",
  "SA02n798:246": "bodhicittaṃ sadāraktaṃ duḥkhanirvatihetukam |",
  "SA02n798:247": "anyathā hi na buddhatvaṃ kalpa saṃkhyeyakoṭibhiḥ ||",
  "SA02n798:248": "tāttvikā durlabhā loke anye vā''varṇa (varaṇā)thitāḥ (naḥ) |",
  "SA02n798:249": "āvaraṇaprahāṇāddhi yoginaste'tidurlabhāḥ ||",
  "SA02n798:250": "tathā coktamāryavasubandhupādaiḥ",
  "SA02n798:251": "'' āvaraṇaparicchedo hi bodhiḥ |",
  "SA02n798:252": "trīṇyāvaraṇāni kuśalānutpādaḥ ,",
  "SA02n798:253": "aparipūrṇasambhāratā ,",
  "SA02n798:254": "amanasikāratā ca |",
  "SA02n798:255": "tatha saddharma agocaram ,",
  "SA02n798:256": "lābhasatkārapūjāyāṃ gauravam ,",
  "SA02n798:257": "sarveṣu akāruṇyaṃ ceti | ''",
  "SA02n798:258": "punaścoktam ''apratiṣṭhitanirvāṇamapyāvaranaṃ bodhisattvagotrāṇām '' iti |",
  "SA02n798:259": "tathā mokṣābhilāśo (ṣo)",
  "SA02n798:260": "'pi bodhisatvānāmāvaraṇamiti vistaraḥ |",
  "SA02n798:261": "tathā ratnacūḍādimahāyānasūtre coktaṃ bhagavatā ''sarvākāravaropetā śūnyatā bhāvanīya yoginā '' iti |",
  "SA02n798:262": "tasyāmapi sarvākāravaropetāyāṃ śūnyatāyāṃ yadyabhiniveśaḥ syāt ,",
  "SA02n798:263": "idameva tattvasāramityākāreṇa ,",
  "SA02n798:264": "so'pi dṛṣṭernarakagamanaheturiti |",
  "SA02n798:265": "tathā coktam ''yaśca śānta matiḥ sattvadharmasamatāṃ jānāti ,",
  "SA02n798:266": "na sa dharmān vā adharmān va abhiniveśa (viśe) ta |",
  "SA02n798:267": "anabhiniveśo dharmāṇāmarthaḥ |",
  "SA02n798:268": "yaścārthamatyete (ti)",
  "SA02n798:269": "sa evāsya mahānarthaḥ '' iti |",
  "SA02n798:270": "evaṃ cet , mokṣārambho vyarthaḥ syāt |",
  "SA02n798:271": "etad bhagavato hṛdayo (yaṃ)",
  "SA02n798:272": "nābhijñā (jña)",
  "SA02n798:273": "sya vacanam |",
  "SA02n798:274": "bandhamokṣa ityudbhāvanā saṃvṛtyā vā tat tattvato na mokṣa iti |",
  "SA02n798:275": "tathā coktam",
  "SA02n798:276": "baddho na mucyate loke abaddho naiva mucyate |",
  "SA02n798:277": "baddhābaddhavinirmukto nānyo [vā] stoha tattvataḥ ||",
  "SA02n798:278": "tathā coktam",
  "SA02n798:279": "tasmāda [na] nyathābhāvaḥ svabhāvo yadi (na ) vidyate |",
  "SA02n798:280": "kathaṃ syādanyathābhāvā (vo)",
  "SA02n798:281": "bhāvaścennaiva vidyate ||",
  "SA02n798:282": "svavikrāmiṇaḥ pṛcchāyāṃ coktam “ ye ca svavikrāmino (ṇo)",
  "SA02n798:283": "bodhisattvā mahāsattvā na vikalpayanti ,",
  "SA02n798:284": "astyasau bodhirnām padārtho yasyārthāvayavamudyukto dūre teṣāṃ bodhisattva [ḥ] |",
  "SA02n798:285": "visaṃvādayanti te sadevamānuṣāsura lokaṃ bodhisattvā na ca vistaraḥ |",
  "SA02n798:286": "ityevaṃ nādaret |",
  "SA02n798:287": "asti nāsti cobhayaṃ pratisi (ṣi)",
  "SA02n798:288": "ddhaṃ bhagavatā bhāvābhāvavibhā vinā |",
  "SA02n798:289": "tathā coktam",
  "SA02n798:290": "śūnyatāṃ ye na jānanti na te jānanti nirvṛtam |",
  "SA02n798:291": "tasmāddhi śunyatā jñeyā bhāvābhāvavibhāvinā ||",
  "SA02n798:292": "uktaṃ ca",
  "SA02n798:293": "śubhāśubhavikalpānāṃ santaticchedalalakṣaṇā |",
  "SA02n798:294": "śūnyatā gaditā buddhainanyit (nyā vai)",
  "SA02n798:295": "śunyatā matā || iti |",
  "SA02n798:296": "tathācoktam",
  "SA02n798:297": "śūnyatā sarvadṛṣṭīnāṃ proktā niḥśaraṇa jinaiḥ |",
  "SA02n798:298": "yeṣāṃ tu śūnyatādṛṣṭistānasādhyān babhāṣire || iti |",
  "SA02n798:299": "gurubhakti [ra] to nityaṃ nityaṃ ca karuṇāśayaḥ |",
  "SA02n798:300": "mantrapūjāva (ra)",
  "SA02n798:301": "to nityaṃ siddhayatyeva na saṃśayaḥ ||",
  "SA02n798:302": "ato bodhiṃ parāṃ yānti kālenaivādisādhanam |",
  "SA02n798:303": "kuśalamutpādayitavyaṃ gurupāramparyavekṣaṇena || iti ||",
  "SA02n798:304": "tathā coktam vajrasattvasaṃbuddhai nanyit (nyā)",
  "SA02n798:305": "śūnyatā gaditā |",
  "SA02n798:306": "(śunyatā) ato hi samantabhadrasya deśanā",
  "SA02n798:307": "ākāśayava yogena gṛhlanti jñānasāgarāḥ |",
  "SA02n798:308": "atha vajradharo rājā mahāsukha vivardhanam ||",
  "SA02n798:309": "samaya deśayet sarva buddhatvaphaladāyakam |",
  "SA02n798:310": "sukhairhṛṣṭai stathā nṛtyairgītavādyaivikurvaṇaiḥ ||",
  "SA02n798:311": "gandhamālyavilepanaistu vidyārājaḥ prasiddhayati |",
  "SA02n798:312": "yathā sukhaṃ sukhaṃ vādye yathārucitaceṣṭītam ||",
  "SA02n798:313": "yathāhāravihāro'pi siddhayate paramākṣaram |",
  "SA02n798:314": "khānapānaprayoga (gai)",
  "SA02n798:315": "stu divyālaṅkārabhūṣaṇaiḥ ||",
  "SA02n798:316": "siddhayate paramaṃ tattvaṃ dinenaikena coditaḥ |",
  "SA02n798:317": "nityaṃ svasamayaḥ sādhyo nityaṃ pūjyāstathāgatāḥ ||",
  "SA02n798:318": "nityaṃ ca guravedeyaṃ tasmād buddha (tva) samo guruḥ |",
  "SA02n798:319": "yathā vairocano nāthastathā vajradharo guruḥ ||",
  "SA02n798:320": "yathākāśo mahārā (gaṃ)",
  "SA02n798:321": "jo vajradharmo mahāmuniḥ |",
  "SA02n798:322": "samantarājo yathā nāthastathācāryaḥ pragīyate ||",
  "SA02n798:323": "tasmātsarvaprayatnena vajrācārya mahāgurum |",
  "SA02n798:324": "pracchannavarakānyāsaṃ nāvamanyāt kadācana ||",
  "SA02n798:325": "punarapyuktaṃ vajrapañjare",
  "SA02n798:326": "gurośchāyāṃ na laṅghayed [guru] patnīṃ ca pādukā [m] |",
  "SA02n798:327": "ye laṅghayanti sammohāt te narāḥ kṣuradhāriṇaḥ ||",
  "SA02n798:328": "sva (su) siddho'pi yadā śiṣyo gurorājñāṃ na (tu) laṅghayet |",
  "SA02n798:329": "iha loke bhavetkuṣṭhaḥ (ṣṭhī)",
  "SA02n798:330": "paraloke narakaṃ vaset ||",
  "SA02n798:331": "māyā śāṭhayaprayogeṇa mithyābhaktiprakāśanāt |",
  "SA02n798:332": "kṣayakuṣṭhamahārogī jāyate narakādiṣu ||",
  "SA02n798:333": "evaṃ matvā sadā śiṣyo gurorbhaktiparāyaṇaḥ |",
  "SA02n798:334": "sādhayet vipulāṃ siddhi gurorājñāṃ praṇayata (jñāprapālanāt) ||",
  "SA02n798:335": " || iti ḍākinījālasaṃvararahasyaṃ samāptam ||"
}