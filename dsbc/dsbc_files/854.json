{
    "854:0": "mañjuśrīstotram",
    "854:1": "śrīmañjunāthakamalāsanaratnamauli-",
    "854:2": "rvidyādhipo bhuvanamaṇḍalacakravartī |",
    "854:3": "dhyānādhipocitavirājitasaumyarūpo",
    "854:4": "vandāmahe suranarāsuravanditāryam || 1 ||",
    "854:5": "bālākṛtiḥ kuvalayojjvalalolahastaḥ",
    "854:6": "keyūrahāramaṇikuṇḍalaghṛṣṭagaṇḍaḥ |",
    "854:7": "khādaṃśca ṣoḍaśaradaṃ sukumārarūpaṃ",
    "854:8": "vandāmahe suravarārcitamañjughoṣam || 2 ||",
    "854:9": "romāgrakūpavivare parivartamānaṃ",
    "854:10": "viśvaprapañcakaraṇaṃ sugatātmajasya |",
    "854:11": "traividyamantra tava nātha guṇārṇaveṇa",
    "854:12": "sūkṣmāya buddhatanayāya namo'stu tasmai || 3 ||",
    "854:13": "gambhīradharmanayamārgasukhapratiṣṭhaṃ",
    "854:14": "jñānodadhiṃ nikhilasattvakṛtārthakāram |",
    "854:15": "prajñānidhānaguṇasāgaramaprameyaṃ",
    "854:16": "mañjuśriyaṃ jinasutaṃ satataṃ namāmi || 4 ||",
    "854:17": "viditasakalatattvaḥ kṣiptasantāpasattva-",
    "854:18": "stribhuvana upakārī sarvaduḥkhāpahārī |",
    "854:19": "madanamathanavīraścārurūpaḥ sucīra-",
    "854:20": "stribhuvanajanatoṣaḥ pātu māṃ mañjughoṣaḥ || 5 ||",
    "854:21": "bālendurucirābhāsaṃ varābharaṇabhūṣitam |",
    "854:22": "prajñābjāmalapatrākṣaṃ vande mañjuśriyaṃ sadā || 6 ||",
    "854:23": "pātraṃ vāmakare yasya bhramannañjalisaṃnibham |",
    "854:24": "nāmnā te sarvato lakṣmīrmañjughoṣaṃ namāmyaham || 7 ||",
    "854:25": "khaḍgapustakahastāya candramaṇḍalavartine |",
    "854:26": "ajñānadhvāntasūryāya mañjughoṣāya te namaḥ || 8 ||",
    "854:27": "jñānottaraprabhāketuṃ praṇidhānamatiṃ tathā |",
    "854:28": "śāntendriyaṃ mañjughoṣaṃ bhaktitaḥ praṇamāmyaham || 9 ||",
    "854:29": "śrī mañjuśrīstavastotraṃ samāptam ||"
}