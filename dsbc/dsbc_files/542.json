{
    "542:0": "|| susaṃbhavaparivartaḥ ||",
    "542:1": "sasāgarā tyakta vasuṃdharā tadā yadā babhūva nṛpa cakravartī |",
    "542:2": "catvāri dvīpāni saratnapūrṇaniryāti tā pūrvajineṣu mahyam || 1 ||",
    "542:3": "na cāsti tadvastu priyaṃ manāpaṃ",
    "542:4": "pūrvaṃ ca mahyaṃ na va tyaktamāsīt |",
    "542:5": "taṃ dharmakāyaṃ parimārgaṇārthaḥ",
    "542:6": "priyajīvitaṃ tyaktamanekakalpān || 2 ||",
    "542:7": "yatha pūrvakalpeṣu acintiyeṣu",
    "542:8": "ratnaśikhisya sugatasya śāsane |",
    "542:9": "parinirvṛtasya sugatasya tasya",
    "542:10": "susaṃbhavo nāma babhūva rājā || 3 ||",
    "542:11": "sa cakravartī caturdvīpa īśvaraḥ",
    "542:12": "samudraparyantamahī praśāsyate |",
    "542:13": "jinendraghoṣāya ca rājadhānīya",
    "542:14": "supto babhūvā tada rājakuñjaraḥ || 4 ||",
    "542:15": "svapnāntare buddhaguṇāñca śrutvā",
    "542:16": "ratnoccayaṃ paśyati dharmabhāṇakam |",
    "542:17": "sthita sūryamadhye va virocamānaṃ",
    "542:18": "prakāśayantaṃ ima sūtrarājam || 5 ||",
    "542:19": "svapnādvibuddhaśca babhūva rājā",
    "542:20": "pītisphuṭaṃ sarvaśarīramasya |",
    "542:21": "abhiniṣkrarma rājakulāni dṛṣṭu",
    "542:22": "upasaṃkramī śrāvakasaṃghamagram || 6 ||",
    "542:23": "karoti pūjāṃ jinaśrāvakāṇāṃ",
    "542:24": "ratnoccayaṃ pṛcchati dharmabhāṇakam |",
    "542:25": "kva cāsti bhikṣūriha cāryasaṃghe",
    "542:26": "ratnoccayo nāma guṇānvitaśca || 7 ||",
    "542:27": "tenāntareṇā ratanoccayo hi",
    "542:28": "anyatra gūhāntara saṃniṣaṇaḥ |",
    "542:29": "vicitraratnaṃ ima sūtrarājaṃ",
    "542:30": "svadhyāyamānaḥ sukha saṃniṣaṇaḥ || 8 ||",
    "542:31": "deśenti rājasya tadantareṇa",
    "542:32": "ratnoccayaṃ bhikṣu sa dharmabhāṇakam |",
    "542:33": "anyatra gūhāntarasaṃniṣaṇaṃ |",
    "542:34": "taṃ tena raśmīśriyayā jvalantam || 9 ||",
    "542:35": "eṣo'tra ratnoccaya dharmabhāṇako",
    "542:36": "dhāreti gambhīrajinasya gocaram |",
    "542:37": "svarṇaprabhāsottamasūtraratnaṃ",
    "542:38": "sūtrendrarājaṃ satataṃ prakāśayet || 10 ||",
    "542:39": "vanditva pādau ratanoccayasya",
    "542:40": "susaṃbhavo rāja idaṃ pravīddhi |",
    "542:41": "deśe hi me pūrṇaśaśāṅka cakraṃ",
    "542:42": "svarṇaprabhāsottamasūtraratnam || 11 ||",
    "542:43": "adhivāsayī so ratanoccayaśca",
    "542:44": "rājñaśca tasyaiva susaṃbhavasya |",
    "542:45": "sarvatrisāhasrikalokadhātau",
    "542:46": "praharṣitāssarvi babhūvu devatāḥ || 12 ||",
    "542:47": "vasudhāpradeśe parame viśiṣṭe",
    "542:48": "ratnodake gandhajalāmvusikte |",
    "542:49": "puṣpāvakīrṇāṃ dharaṇīṃ sa kṛtvā",
    "542:50": "tatrāsanaṃ prāpya tadā narendraḥ || 13 ||",
    "542:51": "samalaṃkṛtaṃ rājña tadāsanaṃ ca",
    "542:52": "cchatrairdhvajairghaṇṭasahasranekaiḥ |",
    "542:53": "nānāvicitrairvarapuṣpacandrair",
    "542:54": "abhyokire rājña tadāsanaṃ ca || 14 ||",
    "542:55": "devāśca nāgāsurakiṃnarāśca",
    "542:56": "yakṣāśca yakṣendramahoragāśca |",
    "542:57": "divyaiśca māndāravapuṣpavarṣair",
    "542:58": "abhyāvakīrṇāśca tadāsanaṃ ca || 15 ||",
    "542:59": "acintiyānanta sahasrakoṭiyo",
    "542:60": "ye āgatā devabhavāgrakāmāḥ |",
    "542:61": "abhiniṣkramitvā ratanoccayaṃ hi",
    "542:62": "abhyo kiranti sma ca sālapuṣpā || 16 ||",
    "542:63": "so cāpi ratnoccaya dharmabhāṇakaḥ",
    "542:64": "śubhābhagātraḥ śucivastraprāvṛtaḥ |",
    "542:65": "upasaṃkramitvā ca tadāsanaṃ hi",
    "542:66": "kṛtāñjalībhūtva namasyate ca || 17 ||",
    "542:67": "devendradevāni ca devatāni",
    "542:68": "māndārapuṣpaṃ ca pravarṣayanti |",
    "542:69": "acintiyā tūryaśatā sahasrā",
    "542:70": "pravādayanti sthita antarīkṣe || 18 ||",
    "542:71": "abhīruhitvā ca sa saṃniṣaṇo",
    "542:72": "ratnoccayo bhikṣu sa dharmabhāṇakaḥ |",
    "542:73": "anusmaritvā daśasū diśāsu",
    "542:74": "acintiyā buddhasahasrakoṭyaḥ || 19 ||",
    "542:75": "sarveṣa sattvāna kṛpāṃja nitya",
    "542:76": "kāruṇyacittaṃ samupādayet saḥ |",
    "542:77": "rājñaśca tasyāpi susaṃbhavasya",
    "542:78": "prakāśitaṃ sūtramidaṃ tadantare || 20 ||",
    "542:79": "kṛtāñjalībhūtva sthihitva rājā",
    "542:80": "yaḥ kāyavācā manumoditaḥ saḥ |",
    "542:81": "saddharmavegāśrupramuktanetraḥ",
    "542:82": "pratisphaṭastasya babhūva kāyaḥ || 21 ||",
    "542:83": "imasya sūtrasya ca pūjanārthaṃ",
    "542:84": "susaṃbhavo rāja tadantareṇa",
    "542:85": "gṛhṇitva cintāmaṇirājaratnaṃ",
    "542:86": "sarvārthahetoḥ praṇidhiṃ cakāra || 22 ||",
    "542:87": "varṣantu adyā iha jambudvipe",
    "542:88": "sasaptaratnāṇi ca bhūṣaṇāni",
    "542:89": "ye ceha sattvāḥ khalu jambudvipe",
    "542:90": "sukhitāśca bheṣyanti mahādhanāśca || 23 ||",
    "542:91": "caturṣu dvīpeṣu pravarṣitāni",
    "542:92": "saptāni ratnāni tadantareṇa |",
    "542:93": "keyūrahārā varakuṇḍalāni",
    "542:94": "tathānnapāne vasanāni caiva || 24 ||",
    "542:95": "dṛṣṭvā ca taṃ rāja susaṃbhavaśca",
    "542:96": "ratnapravarṣaṃ khalu jambudvīpe |",
    "542:97": "catvāri dvīpāni saratnapūrṇā",
    "542:98": "niryātayī ratnaśikhisya śāsane || 25 ||",
    "542:99": "ahaṃ ca saḥ śākyamunistathāgataḥ",
    "542:100": "susaṃbhavo nāma babhūva rājā |",
    "542:101": "yeneha me tyakta vasuṃdharā tadā",
    "542:102": "catvāri dvīpāni saratnapūrṇā || 26 ||",
    "542:103": "akṣobhya āsīt sa tathāgataśca",
    "542:104": "ratnoccayo bhikṣu sa dharmabhāṇakaḥ |",
    "542:105": "yenāsya rājasya susaṃbhavasya",
    "542:106": "prakāśitaṃ sūtramidaṃ tadāntare || 27 ||",
    "542:107": "yanme śrutaṃ sūtramidaṃ tadantare",
    "542:108": "ekāgravācāmanumoditaṃ ca |",
    "542:109": "tenaiva mahyaṃ kuśalena karmaṇā",
    "542:110": "śrotānumodena śrutena tena || 28 ||",
    "542:111": "suvarṇavarṇaṃ śatapuṇyalakṣaṇaṃ",
    "542:112": "labheyi kāyaṃ priyadarśanaṃ sadā |",
    "542:113": "nayanābhirāmaṃ janakāntadarśanaṃ",
    "542:114": "ratiṃkaraṃ devasahasrakoṭinām || 29 ||",
    "542:115": "navottaraṃ notisahasrakoṭyā",
    "542:116": "kalpānabhūvaṃ nṛpacakravartī |",
    "542:117": "aneka kalpāna sahasrakoṭyo",
    "542:118": "trailokyarājatva mayānubhūtam || 30 ||",
    "542:119": "acintiyā kalpa babhūva śakraḥ",
    "542:120": "tathaiva brahmendra praśāntamānasaḥ |",
    "542:121": "ārāgitā me balāprameyā",
    "542:122": "yeṣāṃ pramāṇaṃ na kadāci vidyate || 31 ||",
    "542:123": "tathā pramāṇaṃ bahu puṇyaskandhaṃ",
    "542:124": "yanme śrutaṃ sūtranumoditaṃ ca |",
    "542:125": "yathābhiprāyeṇa mi bodhi prāptā",
    "542:126": "saddharmakāyaśca mayā hi labdha || 32 ||",
    "542:127": "iti śrīsuvarṇaprabhāsottamasūtrendrarāje susaṃbhavaparivarto",
    "542:128": "nāma caturdaśamaḥ ||"
}