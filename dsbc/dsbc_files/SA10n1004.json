{
  "SA10n1004:0": "dvitīyaḥ paricchedaḥ",
  "SA10n1004:1": "munivratasamāśrayaḥ",
  "SA10n1004:2": "evaṃ dṛḍhamahābodhisamādāno jagaddhite |",
  "SA10n1004:3": "pratirūpaṃ pratipadaṃ pratipanno virājate ||1 ||",
  "SA10n1004:4": "sa maitryāpratighātinyā kāruṇyena prasarpiṇā |",
  "SA10n1004:5": "saddharmādhigamātṛpto dharmadāne vimatsaraḥ ||2 ||",
  "SA10n1004:6": "ṛjunāhatamānena manasā tattvadarśinā |",
  "SA10n1004:7": "paradoṣekṣaṇāndhena svadoṣāpattibhīruṇā ||3 ||",
  "SA10n1004:8": "vivādalokasaṃsargalokāyataparāṅmukhaḥ |",
  "SA10n1004:9": "nirguṇe&#39;pi guṇāghānapratataḥ sraṃsitādaraḥ ||4 ||",
  "SA10n1004:10": "kṛpodbhūtena dānena sarvajñatvagataspṛhaḥ |",
  "SA10n1004:11": "sarvasya janakāyasya sarvaduḥkhopaśāntaye ||5 ||",
  "SA10n1004:12": "śīlāmalajalasnāyī kṣamāsitapavitrakaḥ |",
  "SA10n1004:13": "vīryabaddhajaṭābhāro dhyānajñānaparāyaṇaḥ ||6 ||",
  "SA10n1004:14": "samunmiṣitadhīnetraḥ śāstralokajñatāpaṭuḥ |",
  "SA10n1004:15": "hnīvyavatrāpyavasanaḥ sauratyatanubandhanaḥ ||7 ||",
  "SA10n1004:16": "kṛpākṛṣṇājinadharaḥ śraddhāmalakamaṇḍaluḥ |",
  "SA10n1004:17": "smṛtiguptendriyadvāro dhṛtivetrāsanāsanaḥ ||8 ||",
  "SA10n1004:18": "mahāyānamahāramyatapovanasamāśrayaḥ |",
  "SA10n1004:19": "dhyānaprītiphalāhāraḥ smṛtyupasthānagocaraḥ ||9 ||",
  "SA10n1004:20": "gambhīrodārasūtrāntasvādhyāyahatakilbiṣaḥ |",
  "SA10n1004:21": "pratītyotpādasāvitrīṃ japan satyadvayāśrayāt ||10 ||",
  "SA10n1004:22": "varṇāḍhyaiḥ pratipatpuṣpaiḥ sarvadiggandhavāhibhiḥ |",
  "SA10n1004:23": "upāsīnastvaharahaḥ samyaksaṃbuddhabhāskaram ||11 ||",
  "SA10n1004:24": "hutākuśalasaṃkalpaḥ pratisaṃkhyānapāvake |",
  "SA10n1004:25": "munivrataṃ caredevamanuttarapadāptaye ||12 ||",
  "SA10n1004:26": "munivratasamāśrayo nāma dvitīyaḥ paricchedaḥraddhāmalakamaṇḍaluḥ |",
  "SA10n1004:27": "smṛtiguptendriyadvāro dhṛtivetrāsanāsanaḥ ||8 ||",
  "SA10n1004:28": "mahāyānamahāramyatapovanasamāśrayaḥ |",
  "SA10n1004:29": "dhyānaprītiphalāhāraḥ smṛtyupasthānagocaraḥ ||9 ||",
  "SA10n1004:30": "gambhīrodārasūtrāntasvādhyāyahatakilbiṣaḥ |",
  "SA10n1004:31": "pratītyotpādasāvitrīṃ japan satyadvayāśrayāt ||10 ||",
  "SA10n1004:32": "varṇāḍhyaiḥ"
}