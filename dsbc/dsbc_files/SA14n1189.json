{
  "SA14n1189:0": "2. śīlapāramitāsamāsaḥ",
  "SA14n1189:1": "saṃbuddhaśīlābharaṇābhirāmān",
  "SA14n1189:2": "kartuṃ janānutpatitādareṇa |",
  "SA14n1189:3": "svameva śīlaṃ pariśodhyamādau",
  "SA14n1189:4": "śīlaṃ hi śakterbalamādadhāti || 1 ||",
  "SA14n1189:5": "loke tathā prema niveśayeta",
  "SA14n1189:6": "svapne'pi na droharuciryathā syāt |",
  "SA14n1189:7": "paropakāraikarasaḥ pareṣāṃ",
  "SA14n1189:8": "bhogānahīnāmiva na spṛśecca || 2 ||",
  "SA14n1189:9": "dvandvapravṛttervinivṛttabuddhiḥ",
  "SA14n1189:10": "prāgeva dārapraṇayāt parasya |",
  "SA14n1189:11": "kurvīta lokasya hitārthakartā",
  "SA14n1189:12": "kāyena ceṣṭāḥ sujanasya ceṣṭāḥ || 3 ||",
  "SA14n1189:13": "mādhuryaramyāmapi kālayuktāṃ",
  "SA14n1189:14": "satyānukūlāmavibhedinīṃ ca |",
  "SA14n1189:15": "saddharmatattvādhigamāya vāṇīṃ",
  "SA14n1189:16": "brūyādvipakṣāduparamya tasyāḥ ||4 ||",
  "SA14n1189:17": "kāryaṃ prayatnena mayā yadasmai",
  "SA14n1189:18": "tatsādhanena svayameva labdham |",
  "SA14n1189:19": "parasya saukhyeṣviti tuṣṭacittaḥ",
  "SA14n1189:20": "kuryān manonirviṣayāmabhidhyām || 5 ||",
  "SA14n1189:21": "mamaiva daurabalyamidaṃ yadeṣa",
  "SA14n1189:22": "kleśāsvatantraḥ svahitaṃ na vetti |",
  "SA14n1189:23": "parāparādheṣvapi kārya evaṃ",
  "SA14n1189:24": "vyāpādavahnipraśamāya yatnaḥ || 6 ||",
  "SA14n1189:25": "kudṛṣṭisaṃjñaṃ ca tamaḥpratānaṃ",
  "SA14n1189:26": "jñānaprakāśairmanaso nirasya |",
  "SA14n1189:27": "kuryādahāryāṃ naradevavarye",
  "SA14n1189:28": "bhaktiṃ guṇābhyāsavirūḍhamūlām || 7 ||",
  "SA14n1189:29": "svargasya mokṣasya ca satpathebhyo",
  "SA14n1189:30": "naivoccalet karmapathebhya ebhyaḥ |",
  "SA14n1189:31": "atra sthitānāṃ hi jagaddhitārthāścintā-",
  "SA14n1189:32": "viśeṣāḥ saphalībhavanti || 8 ||",
  "SA14n1189:33": "samāsataḥ śīlamidaṃ vadanti",
  "SA14n1189:34": "yaḥ saṃvaraḥ kāyavacomanastaḥ |",
  "SA14n1189:35": "kārtsnyena cātraiva yataḥ sa tasmād",
  "SA14n1189:36": "etānyayatnena viśodhayecca || 9 ||",
  "SA14n1189:37": "hiṃsānivṛttapraṇayo dadāti",
  "SA14n1189:38": "saumyasvabhāvādabhyaṃ janānām |",
  "SA14n1189:39": "yā vāsanā doṣakṛtāsya citte",
  "SA14n1189:40": "tāṃ cāprayatnena samucchinatti || 10 ||",
  "SA14n1189:41": "maitrīviśeṣānugate ca citte",
  "SA14n1189:42": "vairānubandheṣu śamam gateṣu |",
  "SA14n1189:43": "sukhaprabodhaḥ sukhameva śete",
  "SA14n1189:44": "kṣīṇāśubhasvapnavikāradoṣaḥ || 11 ||",
  "SA14n1189:45": "kurvanti rakṣāṃsyapi cāsya rakṣāṃ",
  "SA14n1189:46": "na durgatibhyo bhayamabhyupaiti |",
  "SA14n1189:47": "prāpnoti cārogyaguṇābhirāmamāyuḥ",
  "SA14n1189:48": "prakṛṣṭaṃ sugatipratiṣṭham || 12 ||",
  "SA14n1189:49": "ataśca saṃbodhimupāgatānāṃ",
  "SA14n1189:50": "tathāgatānāmamitaprayāmam |",
  "SA14n1189:51": "nirvartate cittavaśānuvarti",
  "SA14n1189:52": "lokasya saukhyopacayāya vāyuḥ || 13 ||",
  "SA14n1189:53": "anādadānastu parasya bhogān",
  "SA14n1189:54": "āpnoti bhogānmahataḥ paratra |",
  "SA14n1189:55": "narendradāyādagaṇairahāryān",
  "SA14n1189:56": "girīniva śvāsanavairahāryān || 14 ||",
  "SA14n1189:57": "ācāraśuddhyānugatapriyatvaṃ",
  "SA14n1189:58": "viśvāsapātratvamihaiva yāti |",
  "SA14n1189:59": "ataḥ paropakramanirviśaṅko",
  "SA14n1189:60": "gatipratīghātamupaiti naiva || 15 ||",
  "SA14n1189:61": "asārabuddhirdhanavistareṣu",
  "SA14n1189:62": "bhavatyayatnena viśuddhaśīlaḥ |",
  "SA14n1189:63": "tasmādupakleśaviśuddhabuddhira-",
  "SA14n1189:64": "nuttarāṃ ca svayameti bodhim || 16 ||",
  "SA14n1189:65": "kāmeṣu mithyācaraṇānnivṛtto",
  "SA14n1189:66": "jitendriyatvāt praśamābhirāmaḥ |",
  "SA14n1189:67": "prāpnoti lokastutibhiḥ samantāt",
  "SA14n1189:68": "kīrtiṃ diganteṣu vikīryamāṇam || 17 ||",
  "SA14n1189:69": "na cāpi kaṃ citpramadāsu rāgaṃ",
  "SA14n1189:70": "karoti mātṛriva vīkṣamāṇaḥ |",
  "SA14n1189:71": "asmācca puṇyopacayān munīndraḥ",
  "SA14n1189:72": "saṃjāyate vāraṇavastikoṣaḥ || 18 ||",
  "SA14n1189:73": "vāco'nṛtāyāstu nivartamānaḥ",
  "SA14n1189:74": "prāmodyavāñchāṭhyavimuktacittaḥ |",
  "SA14n1189:75": "ādeyasiddhyā vacanasya sattvān",
  "SA14n1189:76": "karoti dharmābhimukhān ayatnāt || 19 ||",
  "SA14n1189:77": "divaukasāṃ ca priyatāṃ yadeti",
  "SA14n1189:78": "satyapriyaścitramidaṃ na tādṛk |",
  "SA14n1189:79": "devasvabhāvo guṇapakṣapātī",
  "SA14n1189:80": "pratyakṣiṇastaccariteṣu te ca || 20 ||",
  "SA14n1189:81": "pramāṇabhūto bhavati priyaśca",
  "SA14n1189:82": "yallaukikānāmidamatra citram |",
  "SA14n1189:83": "prāyeṇa loko hi guṇairdaridraḥ",
  "SA14n1189:84": "svenānumānena parānminoti || 21 ||",
  "SA14n1189:85": "tyaktveva nīlotpalinīvanāni",
  "SA14n1189:86": "viśeṣadarśī kamalāyamāne |",
  "SA14n1189:87": "tasyānane saṃśrayamabhyupaiti",
  "SA14n1189:88": "prahlādano gandhavidhirmanojñaḥ || 22 ||",
  "SA14n1189:89": "bhrājiṣṇunā durgatitārakeṇa",
  "SA14n1189:90": "jñānena paśyaṃśca samāsamāni |",
  "SA14n1189:91": "sa ātmasākṣī samupaiti lajjāṃ",
  "SA14n1189:92": "yādṛcchikairapyaśubhairvitarkaiḥ || 23 ||",
  "SA14n1189:93": "evaṃ sa śuddhaprakṛtiḥ krameṇa",
  "SA14n1189:94": "na śaṅkyate'nyairna ca śaṅkate'nyān |",
  "SA14n1189:95": "tato'sya satyābhyanuvartanī vāga-",
  "SA14n1189:96": "rakṣatāṃ yāti tathāgatatve || 24 ||",
  "SA14n1189:97": "kāyaḥ paropakramaṇairabhedyāḥ",
  "SA14n1189:98": "parairahāryā parivārasaṃpat |",
  "SA14n1189:99": "paiśūnyamuktasya bhavatyabhedyā",
  "SA14n1189:100": "śraddhā ca dharme pratipattisārā || 25 ||",
  "SA14n1189:101": "maitrīmabhedyāmavisaṃvadantīṃ",
  "SA14n1189:102": "kṛpāṃ ca lokārthamasaṃtyajantīm |",
  "SA14n1189:103": "prāpnoti cābhedyatamān munitve",
  "SA14n1189:104": "janmāntarasthānapi śiṣyasaṃghān || 26 ||",
  "SA14n1189:105": "krodhasya sainyāgrarajaḥpratānaṃ",
  "SA14n1189:106": "saṃkalpacaṇḍānilaviprakīrṇam |",
  "SA14n1189:107": "yaśovapurdhvaṃsanamityapāsyaṃ",
  "SA14n1189:108": "maitryambuvāhaiḥ paruṣābhidhānam || 27 ||",
  "SA14n1189:109": "asmānnivṛtto madhurairvacobhirlo-",
  "SA14n1189:110": "kasya cetāṃsi vaśīkaroti |",
  "SA14n1189:111": "lokasya ca premṇi virūḍhamūle",
  "SA14n1189:112": "saivāsya vāggrāhyataratvameti || 28 ||",
  "SA14n1189:113": "ataśca lokāñchataśo vinīya",
  "SA14n1189:114": "teṣāṃ samāvṛtya ca duḥkhamārgam |",
  "SA14n1189:115": "na durgatiṃ gacchati puṇyakarmā",
  "SA14n1189:116": "dharmo hi rakṣeha paratra caiva || 29 ||",
  "SA14n1189:117": "dūrādapi vyaktapadānunādaḥ",
  "SA14n1189:118": "śrīmān adūre'pi sukhasvabhāvaḥ |",
  "SA14n1189:119": "meghasvanodagratarastato'sya",
  "SA14n1189:120": "brahmasvaro vaktram alaṃkaroti || 30 ||",
  "SA14n1189:121": "abaddhavākyādvirataḥ priyatvam",
  "SA14n1189:122": "ekāntato yāti vicakṣaṇānām |",
  "SA14n1189:123": "satyābhidhāne kramate sabuddhiḥ",
  "SA14n1189:124": "prāpnoti māhātmyam akṛtrimaṃ ca || 31 ||",
  "SA14n1189:125": "asmācca puṇyān munirājabhāve",
  "SA14n1189:126": "gāmbhīryagūḍhān paripṛcchamānaḥ |",
  "SA14n1189:127": "praśnānanekānapi caikakāle",
  "SA14n1189:128": "niḥsaṃśayaṃ vyākurute sa vācā || 32 ||",
  "SA14n1189:129": "pretyeha cānarthaphalairavandhyāṃ",
  "SA14n1189:130": "vandhyāmabhidhyāṃ samapāsya buddhyā |",
  "SA14n1189:131": "anīrṣyabhāvādatikāṅkṣitāṃ sa",
  "SA14n1189:132": "prāpnoti vistīrṇatarāṃ samṛddhim || 33 ||",
  "SA14n1189:133": "citte viśuddhe ca tadāśrayāṇi",
  "SA14n1189:134": "vākkāyakarmāṇi śucībhavanti |",
  "SA14n1189:135": "nabhastale kālaguṇābhirāme",
  "SA14n1189:136": "tārāgaṇānāmiva maṇḍalāni || 34 ||",
  "SA14n1189:137": "puṇyādhipatyātkramate ca buddhista-",
  "SA14n1189:138": "syopabhogeṣu sadottameṣu |",
  "SA14n1189:139": "prayāti rājñāmapi saṃmatatvam",
  "SA14n1189:140": "adhṛṣyatāṃ ca pratigarvitānām || 35 ||",
  "SA14n1189:141": "vaikalyamāyānti na cendriyāṇi",
  "SA14n1189:142": "satkarmanirvṛttabalāni tasya |",
  "SA14n1189:143": "ataśca lokatrayapūjya ekaḥ",
  "SA14n1189:144": "śāstā bhavatyaprativartyacakraḥ || 36 ||",
  "SA14n1189:145": "vyāpādadāhajvaravipramuktaḥ",
  "SA14n1189:146": "sādhusvabhāvābhinayo nayena |",
  "SA14n1189:147": "vyaktīkarotīva manaḥprasādaṃ",
  "SA14n1189:148": "svasthapraśāntena viceṣṭitena || 37 ||",
  "SA14n1189:149": "hiṃsātmake vigrahasaṃhite vā",
  "SA14n1189:150": "karmaṇyanāryācarite śaṭhe vā |",
  "SA14n1189:151": "na cāsya buddhiḥ kramate kadācin",
  "SA14n1189:152": "maitrīsukhāsvādaviśeṣalābhāt || 38 ||",
  "SA14n1189:153": "loke vrajatyāryajanena sāmyaṃ",
  "SA14n1189:154": "saṃmānyate daivatavajjanena |",
  "SA14n1189:155": "na brahmaloko'pi ca durlabho'sya",
  "SA14n1189:156": "prasnigdhakarmaṇyamanaḥpathasya || 39 ||",
  "SA14n1189:157": "hitābhinandī jagatāmayatnāt",
  "SA14n1189:158": "prasādayatyeva ca mānasāni |",
  "SA14n1189:159": "ramyaḥ śaratkāla ivāpagānāṃ",
  "SA14n1189:160": "toyāni meghāgamadūṣitāni || 40 ||",
  "SA14n1189:161": "rūpeṇa sarvapriyadarśanena",
  "SA14n1189:162": "jñānāspadenādbhutaceṣṭitena |",
  "SA14n1189:163": "ekīkarotīva tato munitve",
  "SA14n1189:164": "lokasya vijñānapṛthaktvasiddhim || 41 ||",
  "SA14n1189:165": "kudṛṣṭipaṅkakramaṇaṃ lasaṃstu",
  "SA14n1189:166": "prāpnoti kalyāṇahṛdaḥ sahāyān |",
  "SA14n1189:167": "karmasvako'stīti ca karma pāpaṃ",
  "SA14n1189:168": "viśasyamāno'pi karoti naiva || 42 ||",
  "SA14n1189:169": "bhavatyakampyā ca jiṇe'sya bhaktirnā-",
  "SA14n1189:170": "yasyate kautukamaṅgalaiśca |",
  "SA14n1189:171": "ārye ca mārge labhate pratiṣṭhāṃ",
  "SA14n1189:172": "viśeṣagāmitvamato'bhyupaiti || 43 ||",
  "SA14n1189:173": "satkāyadṛṣṭyuccalitaḥ sa yāti",
  "SA14n1189:174": "na durgatiṃ hetuparikṣayeṇa |",
  "SA14n1189:175": "jñānena cānāvaraṇena yukto",
  "SA14n1189:176": "divaḥpṛthivyorvicaratyasaṅgaḥ || 44 ||",
  "SA14n1189:177": "pratyekabuddhairapi cānavāptāḥ",
  "SA14n1189:178": "sarve tato'syābhimukhībhavanti |",
  "SA14n1189:179": "jagaddhitārtheṣu vijṛmbhamāṇāḥ",
  "SA14n1189:180": "sarvajñabhāvāya munīndradharmāḥ || 45 ||",
  "SA14n1189:181": "imāṃ vibhūtiṃ guṇaratnacitrāṃ",
  "SA14n1189:182": "ślāghyāṃ svayaṃgrāhaguṇābhirāmām |",
  "SA14n1189:183": "ko nāma vidvān na samādadīta",
  "SA14n1189:184": "viśeṣataḥ sattvahitābhilāṣī || 46 ||",
  "SA14n1189:185": "divyābhirāmā manujeṣu saṃpat",
  "SA14n1189:186": "prakṛṣṭasaukhyaikarasā ca divyā |",
  "SA14n1189:187": "śīlādyadi syāt kimivātra citraṃ",
  "SA14n1189:188": "yasmāt prarohantyapi buddhadharmāḥ || 47 ||",
  "SA14n1189:189": "śīlacyutastvātmahite'pyaśaktaḥ",
  "SA14n1189:190": "kasmin parasyārthavidhau samarthaḥ |",
  "SA14n1189:191": "tasmād viśeṣeṇa parārthasādhorna",
  "SA14n1189:192": "nyāyyamasmiñchīthilādaratvam || 48 ||",
  "SA14n1189:193": "vivarjayedaṇvapi varjanīyaṃ",
  "SA14n1189:194": "tasmādbhayaṃ tīvramavekṣamāṇaḥ |",
  "SA14n1189:195": "na bodhisattvābhyucitaṃ ca śīlaṃ",
  "SA14n1189:196": "vikhaṇḍayedātmasukhodayena || 49 ||",
  "SA14n1189:197": "na cchidradoṣaiḥ parijarjaraṃ vā",
  "SA14n1189:198": "strīkelisaṃvāhanavīkṣaṇādyaiḥ |",
  "SA14n1189:199": "na durjanakleśaparigrahād vā",
  "SA14n1189:200": "kurvīta śīlaṃ śabalaprakāram || 50 ||",
  "SA14n1189:201": "kalmāṣadoṣāpagataṃ niṣevyam",
  "SA14n1189:202": "ekāntaśuklopacayena śīlam |",
  "SA14n1189:203": "svecchāgatitvācca bhujiṣyavṛttaṃ",
  "SA14n1189:204": "vidvatpraśaṃsābharaṇānavadyam || 51 ||",
  "SA14n1189:205": "samagraśikṣāpadapūraṇācca",
  "SA14n1189:206": "saṃpūrṇamāmarṣavivarjitaṃ ca |",
  "SA14n1189:207": "cetoviśuddhipratibimbabhūtai-",
  "SA14n1189:208": "stīvraiḥ parārthaikarasaiḥ prayogaiḥ || 52 ||",
  "SA14n1189:209": "smṛtyāśrayāccendriyasaṃvareṇa",
  "SA14n1189:210": "śīlasya saṃrakṣaṇatatparaḥ syāt |",
  "SA14n1189:211": "lokasya dauḥśīlyamabhipravṛddhaṃ",
  "SA14n1189:212": "tamaḥ sahasrāṃśurivāpaneṣyan || 53 ||",
  "SA14n1189:213": "duḥkhapratīkāranimittasevyaiḥ",
  "SA14n1189:214": "kāyavraṇālepanaveṣṭanādyaiḥ |",
  "SA14n1189:215": "nyāyopalabdhaiḥ parituṣṭacitto-",
  "SA14n1189:216": "'parānanollokanakātaraḥ syāt || 54 ||",
  "SA14n1189:217": "ślāghyeṣu sarveṣvapi vartamānaḥ",
  "SA14n1189:218": "śīlānukūleṣu guṇodayeṣu |",
  "SA14n1189:219": "avismitatvādaparādhamānī",
  "SA14n1189:220": "kīrterbibhīyācca tadudbhavāyāḥ || 55 ||",
  "SA14n1189:221": "lābhaprakāro hi guṇaprakāśāccha-",
  "SA14n1189:222": "trutvamabhyeti suhṛnmukhena |",
  "SA14n1189:223": "saroruhāṇāmiva śītaraśmiḥ",
  "SA14n1189:224": "śreyaḥ pramāthī śithilavratānām || 56 ||",
  "SA14n1189:225": "śīlaṃ guṇābhyāsavidhiṃ vadanti",
  "SA14n1189:226": "saṃbodhicitte ca guṇāḥ samagrāḥ |",
  "SA14n1189:227": "abhyasyate tacca kṛpāguṇena",
  "SA14n1189:228": "kāruṇyaśīlaḥ satataṃ tataḥ syāt || 57 ||",
  "SA14n1189:229": "yanniśritaṃ kāmabhave'pi naiva",
  "SA14n1189:230": "saṃtiṣṭhate naiva ca rūpadhātau |",
  "SA14n1189:231": "ārūpyadhātau yadasaṃsthitaṃ ca",
  "SA14n1189:232": "tattattvataḥ śīlamudāharanti || 58 ||",
  "SA14n1189:233": "yo lokadhātuṣvamiteṣu sattvā-",
  "SA14n1189:234": "ñchīle pratiṣṭhāpayiṣuḥ samagrān |",
  "SA14n1189:235": "niṣevate lokahitāya śīlaṃ",
  "SA14n1189:236": "taducyate pāramiteti tajjñaiḥ || 59 ||",
  "SA14n1189:237": "śīlaṃ viśeṣādhigamasya mārgo",
  "SA14n1189:238": "dāyādyabhūtaṃ karuṇātmakānām |",
  "SA14n1189:239": "jñānaprakarṣasya śucisvabhāvo",
  "SA14n1189:240": "naṣṭoddhavā maṇḍanajātiragrā || 60 ||",
  "SA14n1189:241": "lokatrayavyāpi manojñāgandhaṃ",
  "SA14n1189:242": "vilepanaṃ pravrajitāvirodhi |",
  "SA14n1189:243": "tulyākṛtibhyo'pi pṛthagjanebhyaḥ",
  "SA14n1189:244": "śīlaṃ viśeṣaṃ kurute narāṇām || 61 ||",
  "SA14n1189:245": "akatthanānāmapi dhīrabhāvād",
  "SA14n1189:246": "vināpi vāgbhedapariśrameṇa |",
  "SA14n1189:247": "atrāsanābhyānatasarvalokaṃ",
  "SA14n1189:248": "tyaktāvalepoddhavamīśvaratvam || 62 ||",
  "SA14n1189:249": "apyaprakāśānvayasaṃstavānām",
  "SA14n1189:250": "akurvatāmapyupakārasāram |",
  "SA14n1189:251": "niṣkevale śīlavidhau sthitānām",
  "SA14n1189:252": "asaṃstutānāmapi yannarāṇām || 63 ||",
  "SA14n1189:253": "rajāṃsi pādāśrayapāvitāni",
  "SA14n1189:254": "praṇāmalabdhāni samudvahanti |",
  "SA14n1189:255": "cūḍāgralagnāni manuṣyadevāḥ",
  "SA14n1189:256": "śrīmattaraṃ śīlamataḥ kulebhyaḥ || 64 ||",
  "SA14n1189:257": "tasmān na durgatibhayena na rājyahetorna",
  "SA14n1189:258": "svargasaṃpadabhilāṣasamudbhavena |",
  "SA14n1189:259": "seveta śīlamamalaṃ na hi tattathā syāllo-",
  "SA14n1189:260": "kārthasiddhiparamastu bhajeta śīlam || 65 ||",
  "SA14n1189:261": " || śīlapāramitāsamāsaḥ ||"
}