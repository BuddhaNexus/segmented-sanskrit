{
  "SA05n878:0": "śākyasiṃhastotram",
  "SA05n878:1": "viṣṇukṛtam",
  "SA05n878:2": "om namaḥ sarvajñāya",
  "SA05n878:3": "name śrīghana tvāṃ sadābhāvabhakto",
  "SA05n878:4": "bhavāmbhodhisetuṃ lasanmokṣahetum |",
  "SA05n878:5": "tridhātuṃ vidhātuṃ surakṣāṃ virakṣāṃ",
  "SA05n878:6": "sudakṣaṃ sukakṣāṃ sujātaṃ sudāntam || 1",
  "SA05n878:7": "name dānaśīlakṣamādhyānavīryaṃ",
  "SA05n878:8": "mahajjñānapāraṃgataṃ saugatatvam |",
  "SA05n878:9": "caturbrahmavaihāralokoddharantaṃ",
  "SA05n878:10": "catuḥsatyadharmopadeśaṃ suveśam || 2 ||",
  "SA05n878:11": "name bodhirājaṃ sugamye virājaṃ",
  "SA05n878:12": "suramye vane devarājādigamyam |",
  "SA05n878:13": "caturthāsanasthaṃ hitārthaṃ diśantaṃ",
  "SA05n878:14": "kṛtānekasusthaṃ jagadrakṣaṇastham || 3 ||",
  "SA05n878:15": "caturmāralokaṃ mahadvīryavantaṃ",
  "SA05n878:16": "jayantaṃ hasantaṃ trijālaṃ ca kālam |",
  "SA05n878:17": "kṣamānaddhadehaṃ name muktagehaṃ",
  "SA05n878:18": "trilokyaikanāthaṃ tathā śākyanātham || 4 ||",
  "SA05n878:19": "name mārasainyaṃ jitaṃ yena sarvaṃ",
  "SA05n878:20": "nirastreṇa sāhāyyamuktena nūnam |",
  "SA05n878:21": "kṣamāvarma maitrīdhanurdhāriṇā ca",
  "SA05n878:22": "jagatpālituṃ bodhivṛkṣasthitena || 5 ||",
  "SA05n878:23": "name śītavyañjairlasaddehagehaṃ",
  "SA05n878:24": "jane snehavantaṃ vane gehavantam |",
  "SA05n878:25": "yutaṃ dvādhikaistriṃśakairlakṣaṇākhyai-",
  "SA05n878:26": "rmahādurlabhaṃ traibhave lokapūjyam || 6 ||",
  "SA05n878:27": "name dharmameghāsthitaṃ supratiṣṭhaṃ",
  "SA05n878:28": "kalau nāthahīne bhaveyaṃ sanāthaḥ |",
  "SA05n878:29": "tathā pālituṃ svāṃ pratijñāṃ cakāra",
  "SA05n878:30": "janiṃ śākyavaṃśe mahīpāvataṃse || 7 ||",
  "SA05n878:31": "name bhāgyato labhyate darśanaṃ te",
  "SA05n878:32": "tathā bhāgyabhājo svayameti buddhiḥ |",
  "SA05n878:33": "sthito dharmameghe kathaṃ darśanaṃ syād",
  "SA05n878:34": "vihīnā na tatrābhigantuṃ praśaktāḥ || 8 ||",
  "SA05n878:35": "idānīṃ bhavatpādapadmotthitena",
  "SA05n878:36": "rajaḥpuñjakena trilokaṃ pavitram |",
  "SA05n878:37": "tathāsmācchirāṃsi pavitrāṇi satyaṃ",
  "SA05n878:38": "cariṣyāmi bodhiṃ bhavacchāsanena || 9 ||",
  "SA05n878:39": "bhujaṅgaprayātaṃ kṛtaṃ mādhavena",
  "SA05n878:40": "paṭhed yo jinasyāgratastho hi nityam |",
  "SA05n878:41": "sadā maṅgalaṃ tasya gehe sudehe",
  "SA05n878:42": "prasannāśca rakṣāṃ kariṣyanti buddhāḥ || 10 ||",
  "SA05n878:43": "trijālaṃ ca chitvā sukhāni prabhuktvā",
  "SA05n878:44": "tathā dānaśīlādipāraṃgatāśca |",
  "SA05n878:45": "mahābodhilabdhā jagatpālakṣodaṃ",
  "SA05n878:46": "gamiṣyanti cānte sukhāvatyupākhyām || 11 ||",
  "SA05n878:47": "śrīśākyasiṃhasya viṣṇukṛtaṃ bhujaṅgaprayātastotraṃ samāptam |"
}