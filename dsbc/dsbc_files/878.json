{
    "878:0": "śākyasiṃhastotram",
    "878:1": "viṣṇukṛtam",
    "878:2": "om namaḥ sarvajñāya",
    "878:3": "name śrīghana tvāṃ sadābhāvabhakto",
    "878:4": "bhavāmbhodhisetuṃ lasanmokṣahetum |",
    "878:5": "tridhātuṃ vidhātuṃ surakṣāṃ virakṣāṃ",
    "878:6": "sudakṣaṃ sukakṣāṃ sujātaṃ sudāntam || 1",
    "878:7": "name dānaśīlakṣamādhyānavīryaṃ",
    "878:8": "mahajjñānapāraṃgataṃ saugatatvam |",
    "878:9": "caturbrahmavaihāralokoddharantaṃ",
    "878:10": "catuḥsatyadharmopadeśaṃ suveśam || 2 ||",
    "878:11": "name bodhirājaṃ sugamye virājaṃ",
    "878:12": "suramye vane devarājādigamyam |",
    "878:13": "caturthāsanasthaṃ hitārthaṃ diśantaṃ",
    "878:14": "kṛtānekasusthaṃ jagadrakṣaṇastham || 3 ||",
    "878:15": "caturmāralokaṃ mahadvīryavantaṃ",
    "878:16": "jayantaṃ hasantaṃ trijālaṃ ca kālam |",
    "878:17": "kṣamānaddhadehaṃ name muktagehaṃ",
    "878:18": "trilokyaikanāthaṃ tathā śākyanātham || 4 ||",
    "878:19": "name mārasainyaṃ jitaṃ yena sarvaṃ",
    "878:20": "nirastreṇa sāhāyyamuktena nūnam |",
    "878:21": "kṣamāvarma maitrīdhanurdhāriṇā ca",
    "878:22": "jagatpālituṃ bodhivṛkṣasthitena || 5 ||",
    "878:23": "name śītavyañjairlasaddehagehaṃ",
    "878:24": "jane snehavantaṃ vane gehavantam |",
    "878:25": "yutaṃ dvādhikaistriṃśakairlakṣaṇākhyai-",
    "878:26": "rmahādurlabhaṃ traibhave lokapūjyam || 6 ||",
    "878:27": "name dharmameghāsthitaṃ supratiṣṭhaṃ",
    "878:28": "kalau nāthahīne bhaveyaṃ sanāthaḥ |",
    "878:29": "tathā pālituṃ svāṃ pratijñāṃ cakāra",
    "878:30": "janiṃ śākyavaṃśe mahīpāvataṃse || 7 ||",
    "878:31": "name bhāgyato labhyate darśanaṃ te",
    "878:32": "tathā bhāgyabhājo svayameti buddhiḥ |",
    "878:33": "sthito dharmameghe kathaṃ darśanaṃ syād",
    "878:34": "vihīnā na tatrābhigantuṃ praśaktāḥ || 8 ||",
    "878:35": "idānīṃ bhavatpādapadmotthitena",
    "878:36": "rajaḥpuñjakena trilokaṃ pavitram |",
    "878:37": "tathāsmācchirāṃsi pavitrāṇi satyaṃ",
    "878:38": "cariṣyāmi bodhiṃ bhavacchāsanena || 9 ||",
    "878:39": "bhujaṅgaprayātaṃ kṛtaṃ mādhavena",
    "878:40": "paṭhed yo jinasyāgratastho hi nityam |",
    "878:41": "sadā maṅgalaṃ tasya gehe sudehe",
    "878:42": "prasannāśca rakṣāṃ kariṣyanti buddhāḥ || 10 ||",
    "878:43": "trijālaṃ ca chitvā sukhāni prabhuktvā",
    "878:44": "tathā dānaśīlādipāraṃgatāśca |",
    "878:45": "mahābodhilabdhā jagatpālakṣodaṃ",
    "878:46": "gamiṣyanti cānte sukhāvatyupākhyām || 11 ||",
    "878:47": "śrīśākyasiṃhasya viṣṇukṛtaṃ bhujaṅgaprayātastotraṃ samāptam |"
}