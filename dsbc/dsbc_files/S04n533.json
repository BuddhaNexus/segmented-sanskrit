{
  "S04n533:0": " || kamalākarasarvatathāgatastavaparivartaḥ ||",
  "S04n533:1": "atha khalu bhagavāṃstāṃ bodhisattvasamuccayāṃ kuladevatāmetadavocat |",
  "S04n533:2": "tena khalu punaḥ kuladevate kālena tena samayena rājā suvarṇabhujendro nāmāsīt |",
  "S04n533:3": "etena kamalākareṇa sarvatathāgatastavenātītānāgatapratyutpannān buddhān bhagavato'bhyastāvīt ||",
  "S04n533:4": "ye jina pūrvaka ye ca bhavanti",
  "S04n533:5": "ye ca dhriyanti daśodiśi loke |",
  "S04n533:6": "teṣa jināna karomi praṇāmaṃ",
  "S04n533:7": "taṃ jinasaṃghamahaṃ praśayiṣye || 1 ||",
  "S04n533:8": "śāntapraśāntaviśuddhamunīndraṃ",
  "S04n533:9": "suvarṇavarṇaprabhāsitagātram |",
  "S04n533:10": "sarvasurāsurasusvarabuddhaṃ",
  "S04n533:11": "brahmarute svaragarjitaghoṣam || 2 ||",
  "S04n533:12": "ṣaṭpadamaulamahīruhakeśaṃ",
  "S04n533:13": "nīlasukuñcitakāśanikāśam |",
  "S04n533:14": "śaṅkhatuṣārasupāṇḍaladantaṃ",
  "S04n533:15": "hemavirājitabhāsitanābham || 3 ||",
  "S04n533:16": "nīlaviśālaviśuddhasunetraṃ",
  "S04n533:17": "nīlamivitpalapracyutibhāsam |",
  "S04n533:18": "padmasuvarṇaviśālasujihvaṃ",
  "S04n533:19": "padmaprabhāsitapadmamukhābham || 4 ||",
  "S04n533:20": "śaṅkhamṛṇālanibhāmukhatorṇaṃ",
  "S04n533:21": "dakṣiṇavartitaverulivarṇam |",
  "S04n533:22": "sūkṣmaniśākarakṣīṇaśaśīva",
  "S04n533:23": "gātra munermramarājvalanābham || 5 ||",
  "S04n533:24": "kāñcanakoṭi suvarṇamṛduraṃ",
  "S04n533:25": "nāsamukhonnata pīvaraghrāṇam |",
  "S04n533:26": "agradharāgraviśiṣṭasunāsaṃ",
  "S04n533:27": "mṛduka sarvajināṃśa satatam || 6 ||",
  "S04n533:28": "ekasame cittaromamukhāgraṃ",
  "S04n533:29": "vālasuromapradakṣiṇavartam |",
  "S04n533:30": "nīlanibhā jvalakuṇḍalajātaṃ",
  "S04n533:31": "nīlavirājitamaulisugrīvam || 7 ||",
  "S04n533:32": "jātasamānaprabhāsitagātraṃ",
  "S04n533:33": "pūjitasarvi deśodiśi loke |",
  "S04n533:34": "duḥkhamanantapraśāntatriloke",
  "S04n533:35": "sarvasukhena ca tarpitasattvam || 8 ||",
  "S04n533:36": "narakagātiṣvatha tiryaggatīṣu",
  "S04n533:37": "pretasurāsuramanuṣyagatīṣu |",
  "S04n533:38": "teṣu ca sarvasukhārpitasattvaṃ",
  "S04n533:39": "sarvapraśānta apāyagatīṣu || 9 ||",
  "S04n533:40": "varṇasuvarṇakanākanibhāsaṃ",
  "S04n533:41": "kāñcanataptaprabhāsitagātram |",
  "S04n533:42": "saumyaśaśāṅkasuvimalavakraṃ",
  "S04n533:43": "vikāsitarājitasuvimalavadanam || 10 ||",
  "S04n533:44": "taruṇatanūruhakomalagātraṃ",
  "S04n533:45": "siṃhamivākramavikramanāgam |",
  "S04n533:46": "lambitahasta pralambitabāhuṃ",
  "S04n533:47": "mārutapreritaśālalateva || 11 ||",
  "S04n533:48": "vyomaprabhājvalamuñcitaraśmiṃ",
  "S04n533:49": "sūryasahasramiva pratapantam |",
  "S04n533:50": "nirmalagātravarebhi munīndraṃ",
  "S04n533:51": "sarvaprabhāsita kṣetramanantam || 12 ||",
  "S04n533:52": "candraniśākarabhāskarajālaṃ",
  "S04n533:53": "kṣetramanantasahasraśateṣu |",
  "S04n533:54": "te'pi ca niṣṭhita sarvamabhūṣi",
  "S04n533:55": "buddhaprabhāsavirocanatāyai || 13 ||",
  "S04n533:56": "buddhadivākaralokapradipaṃ",
  "S04n533:57": "buddhadivākaraśatasahasram |",
  "S04n533:58": "kṣetramanantasahasraśateṣu",
  "S04n533:59": "paśyatu sattva tathāgatasūryam || 14 ||",
  "S04n533:60": "puṇyasahasraśatāccitakāyaṃ",
  "S04n533:61": "sarvaguṇebhiralaṅkṛtagātram |",
  "S04n533:62": "śauṇḍagajendranibhaṃ jinabāhuṃ",
  "S04n533:63": "vimalasulakṣaṇamaṇḍitahastam || 15 ||",
  "S04n533:64": "bhūmitalopamarajasamatulyaṃ",
  "S04n533:65": "sūkṣmarajopama ye gatabuddhāḥ ||",
  "S04n533:66": "sūkṣmarajopama ye ca bhavanti",
  "S04n533:67": "sūkṣmarajopama ye ca sthihanti || 16 ||",
  "S04n533:68": "teṣa jināna karomi praṇāmaṃ",
  "S04n533:69": "kāyatu vācamanena prasannaḥ |",
  "S04n533:70": "puṣpapradānasugandhapradānai -",
  "S04n533:71": "rvarṇaśatena sucetasi cāpi || 17 ||",
  "S04n533:72": "jihvaśatairapi buddhaguṇāni",
  "S04n533:73": "kalpasahasraśate na hi vaktum |",
  "S04n533:74": "ye guṇasādhunivṛtti jinānāṃ",
  "S04n533:75": "sā ca varāgravicitra anekaiḥ || 18 ||",
  "S04n533:76": "ekajinasya guṇā na hi śakyā",
  "S04n533:77": "jihvaśatairapi bhāṣitu kaścit |",
  "S04n533:78": "kāmamaśakti hi sarvajinānāṃ",
  "S04n533:79": "ekaguṇasya hi vistara vaktum || 19 ||",
  "S04n533:80": "sarvasadevakuloktasamūhaḥ",
  "S04n533:81": "sarvabhavāgrabhave jalapūrṇā |",
  "S04n533:82": "keśagrahaṇena tu śakya pramātuṃ",
  "S04n533:83": "naiva ca ekaguṇā sugatānām || 20 ||",
  "S04n533:84": "varṇita saṃstuta me jinasarvaṃ",
  "S04n533:85": "kāyatu vāca prasannamanena |",
  "S04n533:86": "yanmama sañcitapuṇyaphalāgraṃ",
  "S04n533:87": "tena ca sattva prabhotu jinatvam || 21 ||",
  "S04n533:88": "evaṃ stavitva narapati buddhaṃ",
  "S04n533:89": "evaṃ karoti nṛpaḥ praṇidhānam |",
  "S04n533:90": "yatra ca kutraci mahya bhaveta",
  "S04n533:91": "jāti anāgatakalpamanantā || 22 ||",
  "S04n533:92": "īdṛśi bheri mi paśyami svapne",
  "S04n533:93": "īdṛśa deśana tatra śṛṇomi |",
  "S04n533:94": "īdṛśa jīnastutikamalākara",
  "S04n533:95": "jātiṣu tatra labhe smaraṇatvam || 23 ||",
  "S04n533:96": "buddhaguṇāni anantamatulyā",
  "S04n533:97": "ye'pi ca durlabha kalpasahasraiḥ |",
  "S04n533:98": "amu śruṇeya ca svapnagato'pi",
  "S04n533:99": "teṣu ca deśayi divasagato'pi || 24 ||",
  "S04n533:100": "duḥkhasamudra vimocayi sattvā",
  "S04n533:101": "pūrayi ṣaḍabhi pi pāramitābhiḥ |",
  "S04n533:102": "bodhimanuttara paśca labheyaṃ",
  "S04n533:103": "kṣetra bhaveta mamā asamarthyam || 25 ||",
  "S04n533:104": "bheripradānavipākaphalena",
  "S04n533:105": "sarvajināna ca saṃstutihetoḥ |",
  "S04n533:106": "saṃmukha paśyami śākyamunīndraṃ",
  "S04n533:107": "vyākaraṇaṃ hyahu tatra labheyam || 26 ||",
  "S04n533:108": "ye ima dāraka dvau mama putrau",
  "S04n533:109": "kanakendra kanakaprabhāsvaraḥ |",
  "S04n533:110": "te ubhi dāraka tatra labheyaṃ",
  "S04n533:111": "bodhimanuttara vyākaraṇaṃ ca || 27 ||",
  "S04n533:112": "ye'pi ca sattva arakṣa atrāṇā",
  "S04n533:113": "śaraṇavihīna viyāsagatāśca |",
  "S04n533:114": "teṣu bhaveya anāgata sarva",
  "S04n533:115": "trāṇaparāyaṇaśaraṇebhiśca || 28 ||",
  "S04n533:116": "duḥkhasamudbhavasaṃkṣayakartā",
  "S04n533:117": "sarvasukhasya ca ākarabhūtaḥ |",
  "S04n533:118": "kalpa anāgata bodhi careyaṃ",
  "S04n533:119": "yattaka pūrvakakoṭigatāśca || 29 ||",
  "S04n533:120": "svarṇaprabhottamadeśanatāya",
  "S04n533:121": "pāpasamudra śoṣatu mahyam |",
  "S04n533:122": "karmasamudra vikīryatu mahyaṃ",
  "S04n533:123": "kleśasamudra vicchidyatu mahyam || 30 ||",
  "S04n533:124": "puṇyasamudra prapūryatu mahyaṃ",
  "S04n533:125": "jñānasamudra viśodhyatu mahyam |",
  "S04n533:126": "vimalajñānaprabhāsabalena",
  "S04n533:127": "sarvaguṇāna samudra bhaveyā || 31 ||",
  "S04n533:128": "bodhiguṇairguṇaratna prapūrṇā",
  "S04n533:129": "deśanasvarṇa prabhāsabalena |",
  "S04n533:130": "puṇyaprabhāsa bhaviṣyati mahyaṃ",
  "S04n533:131": "bodhiprabhāsa viśodhyatu mahyam || 32 ||",
  "S04n533:132": "kāyaprabhāsa bhaviṣyati mahyaṃ",
  "S04n533:133": "puṇyaprabhāsa virocanatā ca |",
  "S04n533:134": "sarvatriloki viśiṣṭa bhaveyaṃ",
  "S04n533:135": "pūṇyabalena samanvita nityam || 33 ||",
  "S04n533:136": "duḥkhasamudra uttārayitā",
  "S04n533:137": "sarvasukhasya ca sāgarakalpya |",
  "S04n533:138": "kalpamanāgata bodhi careyaṃ",
  "S04n533:139": "yattakapūrvakakoṭigatāśca || 34 ||",
  "S04n533:140": "yādṛśakṣetraviśiṣṭa triloke",
  "S04n533:141": "sarvajinānamananta guṇena |",
  "S04n533:142": "tādṛśakṣetramanantaguṇaṃ",
  "S04n533:143": "bheṣyati mahyamanāgatasarvam || 35 ||",
  "S04n533:144": "iti śrīsuvarṇaprabhāsottamasūtrendrarāje kamalākara -",
  "S04n533:145": "sarvatathāgatastavaparivarto nāma pañcamaḥ ||"
}