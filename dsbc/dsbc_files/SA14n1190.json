{
  "SA14n1190:0": "3. kṣāntipāramitāsamāsaḥ",
  "SA14n1190:1": "saṃmohanīṃ manmathapakṣamāyāṃ",
  "SA14n1190:2": "prāhuḥ sukhāṃ caiva vimokṣamāyām |",
  "SA14n1190:3": "tasyāṃ na kuryāt kaiva kṣamāyāṃ",
  "SA14n1190:4": "prayatnamekāntahitakṣamāyām || 1 ||",
  "SA14n1190:5": "parāparādheṣu sadānabhijñā",
  "SA14n1190:6": "vyavasthitiḥ sattvavatāṃ manojñā |",
  "SA14n1190:7": "guṇābhinirvartitacārusaṃjñā",
  "SA14n1190:8": "kṣameti lokārthacarī kṛpājñā || 2 ||",
  "SA14n1190:9": "parārthamabhyudyatamānasānāṃ",
  "SA14n1190:10": "dīkṣāṃ titikṣāṃ prathamāṃ vadanti |",
  "SA14n1190:11": "seturjalānīva hi roṣadoṣaḥ",
  "SA14n1190:12": "śreyāṃsi lokasya samāvṛṇoti ||3 ||",
  "SA14n1190:13": "alaṃkriyā śaktisamanvitānāṃ",
  "SA14n1190:14": "tapodhanānāṃ balasaṃpadagrā |",
  "SA14n1190:15": "vyāpādadāvānalavāridhārā",
  "SA14n1190:16": "pretyeha ca kṣāntiranarthaśāntiḥ || 4 ||",
  "SA14n1190:17": "kṣamāmaye varmaṇi sajjanānāṃ",
  "SA14n1190:18": "vikuṇṭhitā durjanavākyabāṇāḥ |",
  "SA14n1190:19": "prāyaḥ praśaṃsākusumatvametya",
  "SA14n1190:20": "tatkīrtimālāvayavā bhavanti || 5 ||",
  "SA14n1190:21": "pratikriyā durjanavāgviṣāṇāṃ",
  "SA14n1190:22": "prahlādanī jñānaniśākarābhā |",
  "SA14n1190:23": "dhīraprakārā prakṛtiryatīnāṃ",
  "SA14n1190:24": "kṣāntirguṇānām adhivāsabhūmiḥ || 6 ||",
  "SA14n1190:25": "sattvasya gāmbhīryamayasya sāro",
  "SA14n1190:26": "ghanāgamaḥ krodhanidāghaśāntyai |",
  "SA14n1190:27": "vyatītavelasya guṇārṇavasya",
  "SA14n1190:28": "vyāpī svanaḥ kṣāntimayo'bhyudeti ||7 ||",
  "SA14n1190:29": "ā brahmalokādadhirohāṇārthā",
  "SA14n1190:30": "sopānapaṅktirgatakhedadoṣā |",
  "SA14n1190:31": "karmāntaśālā guṇaśībharasya",
  "SA14n1190:32": "rūpasya sallakṣaṇabhūṣaṇasya || 8 ||",
  "SA14n1190:33": "unmūlanī vairaphalācitānāṃ",
  "SA14n1190:34": "kṣamāsariddoṣamahādrumāṇām |",
  "SA14n1190:35": "saṃbodhicittasya vivardhitasya",
  "SA14n1190:36": "guṇāmburaśeḥ satatānukūlā || 9 ||",
  "SA14n1190:37": "śubhā paratrāpi hite samṛddhirjaga-",
  "SA14n1190:38": "ddhitārthasya parā vivṛddhiḥ |",
  "SA14n1190:39": "śubhasvabhāvātiśayaprasiddhiḥ",
  "SA14n1190:40": "kṣāntirmanaḥkāyavacoviśuddhiḥ || 10 ||",
  "SA14n1190:41": "saṃsāradoṣairna ca cchedameti",
  "SA14n1190:42": "sattvān kṛpāsnigdhamavekṣamāṇaḥ |",
  "SA14n1190:43": "satkarmabhirlokahitaiḥ samantād",
  "SA14n1190:44": "yaśomayatvaṃ vrajatīva loke || 11 ||",
  "SA14n1190:45": "na spṛśyate vismayavācyadoṣairjñā-",
  "SA14n1190:46": "nāvadānena titikṣureva |",
  "SA14n1190:47": "anityatākṣāntibalodayācca",
  "SA14n1190:48": "praharṣamāyāti sukhe'pi naiva || 12 ||",
  "SA14n1190:49": "saṃkocamāyāti na cāyaśobhirvi-",
  "SA14n1190:50": "sāriṇā kṣāntibalaśrayeṇa |",
  "SA14n1190:51": "ataśca śeṣairapi lokadharmairani-",
  "SA14n1190:52": "śritatvānna sa cāpalīti || 13 ||",
  "SA14n1190:53": "tīvraprakārairapi viprakārairna",
  "SA14n1190:54": "vikriyāṃ yānti satāṃ manāṃsi |",
  "SA14n1190:55": "dṛḍhābhilāṣāṇi munīndrabhāve",
  "SA14n1190:56": "kṣāntyā balādhānasusaṃskṛtāni || 14 ||",
  "SA14n1190:57": "sa kṣāntidhīreṇa ca mānasena",
  "SA14n1190:58": "kaṣṭāni saṃdarśayate tapāṃsi |",
  "SA14n1190:59": "darponnatiṃ tīrthakṛtāṃ manaḥsu",
  "SA14n1190:60": "nīcaiḥ kariṣyan hitakāmyayaiva || 15 ||",
  "SA14n1190:61": "loko'yamātmābhiniveśasamūḍhaḥ",
  "SA14n1190:62": "śeṣān parānityabhimanyamānaḥ |",
  "SA14n1190:63": "tadviprakārairabhibhūtacetā<ḥ>",
  "SA14n1190:64": "kṣamāviyogāt parikhedameti || 16 ||",
  "SA14n1190:65": "kṛpāsanāthāni satāṃ manāṃsi",
  "SA14n1190:66": "kṣāntyā kṛtasvastyayanakriyāṇi |",
  "SA14n1190:67": "naṣṭātmadṛṣṭiṇi parāpakārān",
  "SA14n1190:68": "na vikriyāṃ yānti guṇānurāgāt || 17 ||",
  "SA14n1190:69": "mithyāvikalpo hṛdayajvarasya",
  "SA14n1190:70": "krodhasya heturdhṛtidurbalānām |",
  "SA14n1190:71": "samyagvikalpastu samādadhāti",
  "SA14n1190:72": "kṣāntiprakārāṃ manasaḥ praśāntim || 18 ||",
  "SA14n1190:73": "vikalpasanniśrayasaṃśritāyāṃ",
  "SA14n1190:74": "kṣāntyāṃ na tu syāccalitāvakāśaḥ |",
  "SA14n1190:75": "pratyūṣavātasphurite'mbhasīva",
  "SA14n1190:76": "saṃpūrṇacandrapratibimbalakṣayāḥ || 19 ||",
  "SA14n1190:77": "vikalpaśāntiṃ paramārthatastu",
  "SA14n1190:78": "kṣāntiṃ kṣamātattvavido vadanti |",
  "SA14n1190:79": "tasmādvikalpopaśame yateta",
  "SA14n1190:80": "svapnopamaṃ lokamavekṣamāṇaḥ || 20 ||",
  "SA14n1190:81": "cakṣuḥ kim ākrośati cakṣure-",
  "SA14n1190:82": "tacchrotrādi vākrośati kiṃ tadādi |",
  "SA14n1190:83": "yaivaṃ kṣamā sāyatanānvavekṣā",
  "SA14n1190:84": "na kṣāntireṣā paramārthatastu || 21 ||",
  "SA14n1190:85": "vaktā vacaścaitadanityameva",
  "SA14n1190:86": "śrutirvikalpo'pi ca yo mamāyam |",
  "SA14n1190:87": "anityabhāvapravikalpanaiṣā",
  "SA14n1190:88": "na kṣāntimetām paramāṃ vadanti || 22 ||",
  "SA14n1190:89": "kartāpakārasya na kaścidasti",
  "SA14n1190:90": "naivāsti kaścitkriyāte ca yasya |",
  "SA14n1190:91": "nairātmasaṃdarśanasiddhireṣā",
  "SA14n1190:92": "na kṣāntireṣāpi gataprakarṣā || 23 ||",
  "SA14n1190:93": "tattatpratītya prabhavanti bhāvā",
  "SA14n1190:94": "nindāpraśaṃsāsukhaduḥkhasaṃjñāḥ |",
  "SA14n1190:95": "pratītyasiddheravatārabhūmirna",
  "SA14n1190:96": "kṣāntiratyantasamāhitaiṣā || 24 ||",
  "SA14n1190:97": "yadyesā saṃmohamahāgraheṇa",
  "SA14n1190:98": "paryastacetā nanu nāhamevam |",
  "SA14n1190:99": "ityunnate cāvanate ca citte",
  "SA14n1190:100": "kṣāntiprakarṣasya kuto'vakāśaḥ || 25 ||",
  "SA14n1190:101": "pradhvaṃsinī varṇalavapratiśru-",
  "SA14n1190:102": "dyantrādivaikaikaśa uccarantī |",
  "SA14n1190:103": "kuryāṃ kathaṃ kasya ca kāṃ ca pīḍām",
  "SA14n1190:104": "eṣāpi na kṣāntiratiprakṛṣṭā || 26 ||",
  "SA14n1190:105": "yadyesā matpāpaparikṣayārthaṃ",
  "SA14n1190:106": "na vīkṣate svāmapi dharmapīḍām |",
  "SA14n1190:107": "asmān na kalyāṇataraṃ hi mitram",
  "SA14n1190:108": "asāvapi kṣāntyupacārā eva || 27 ||",
  "SA14n1190:109": "karmasvatāṃ eva hi vīkṣamāṇasti-",
  "SA14n1190:110": "tikṣate tadguṇadarśanācca |",
  "SA14n1190:111": "naivaṃprakārāpi hi naiṣṭhikatvaṃ",
  "SA14n1190:112": "kṣāntirvikalpopahatā prayāti || 28 ||",
  "SA14n1190:113": "anityaduḥkhāśuciniḥsvabhāvatā",
  "SA14n1190:114": "mama kṣamante na tu tadviparyayāḥ |",
  "SA14n1190:115": "iyaṃ vipakṣapraśamakṣamā kṣamā",
  "SA14n1190:116": "dvayapravṛtterna tu pāramārthikī || 29 ||",
  "SA14n1190:117": "ayatnatattvārthavicakṣaṇo janaḥ",
  "SA14n1190:118": "paropakāreṣu yataḥ pravartate |",
  "SA14n1190:119": "kṣamā na caivaṃ samatāṃ sameti yā",
  "SA14n1190:120": "yataḥ kṣamaivaṃ na vikalpanakṣayā || 30 ||",
  "SA14n1190:121": "nirodham āyānti yadā tvaśeṣatāḥ",
  "SA14n1190:122": "samādhikanyūnavikalpanakramāḥ |",
  "SA14n1190:123": "anuttarāṃ kṣāntimamānagocarāṃ",
  "SA14n1190:124": "vadanti tāmadvāyamārgacāriṇāḥ || 31 ||",
  "SA14n1190:125": "svataḥ parasmādubhayādahetuto",
  "SA14n1190:126": "yathā na bhāvāḥ prabhavanti ke cana |",
  "SA14n1190:127": "svataḥ parasmād ubhayād ahetutastathā",
  "SA14n1190:128": "na bhāvā vibhavanti ke cana || 32 ||",
  "SA14n1190:129": "naṣṭād anaṣṭād ubhayāc na nobhayān",
  "SA14n1190:130": "na jātu kāryaṃ khalu vidyate kva cit |",
  "SA14n1190:131": "tathāpi kāryaṃ samudeti vastuno",
  "SA14n1190:132": "yetthaṃ kṣamā sā dvayavarjitā kṣamā || 33 ||",
  "SA14n1190:133": "sato'sato vāsti na janma janmanā",
  "SA14n1190:134": "vinā nirodho'pi na kasya cit kva cit |",
  "SA14n1190:135": "svabhāvaśūnyāmiti bhāvakalpanāṃ",
  "SA14n1190:136": "vipaśyataḥ kṣāntirudeti naiṣṭhikī || 34 ||",
  "SA14n1190:137": "avāpya yāṃ vyākriyate sahasraśo",
  "SA14n1190:138": "jinairasau nāma jino bhaviṣyati |",
  "SA14n1190:139": "pravartate lokahitakriyāvidhiḥ",
  "SA14n1190:140": "samāhitasyaiva ca tasya sarvadā || 35 ||",
  "SA14n1190:141": "yāvacca bhāvābhiniviṣṭabuddhiratra",
  "SA14n1190:142": "dvayaṃ tāvadupaiti mohāt |",
  "SA14n1190:143": "tathānimittaṃ ca vimokṣaheturdure",
  "SA14n1190:144": "bhavatyasya yathā kṣiteḥ kham || 36 ||",
  "SA14n1190:145": "upaiti dharmapraṇidhānakarmasu",
  "SA14n1190:146": "prabhutvamṛddhāvadhimuktijanmasu |",
  "SA14n1190:147": "tathā pariṣkāravidhau svacetasi",
  "SA14n1190:148": "prakarṣiṇi jñānabale tathāyuṣi || 37 ||",
  "SA14n1190:149": "avāpya caitadvaśitāmayaṃ dhanaṃ",
  "SA14n1190:150": "prakṛṣṭaṃ akṣiṣṇu parārthasādhanam |",
  "SA14n1190:151": "janasya kṛcchreṣu patiṣyataḥ sataḥ",
  "SA14n1190:152": "sa jāyate dhāraṇakāraṇaṃ vibhuḥ || 38 ||",
  "SA14n1190:153": "tasmāt parārthamahatīṃ dhuramudvahadbhiḥ",
  "SA14n1190:154": "kṣānterupāyavidhireṣa sadānugamyaḥ |",
  "SA14n1190:155": "atra sthitasya hi bhavanti parārthacittāḥ",
  "SA14n1190:156": "sarvā<ḥ> kriyā guṇaphalābharaṇābhirāmāḥ || 39 ||",
  "SA14n1190:157": "asyāṃ hi bhaktirapi yā pravirūḍhamūlā",
  "SA14n1190:158": "tāmabhyasanti munayo munirājabhāve |",
  "SA14n1190:159": "śraddhānuviddhamanasāṃ na hi dharmamārge",
  "SA14n1190:160": "dṛṣṭo manoratharathasya yato'kṣabhaṅgaḥ || 40 ||",
  "SA14n1190:161": " || kṣāntipāramitāsamāsaḥ ||"
}