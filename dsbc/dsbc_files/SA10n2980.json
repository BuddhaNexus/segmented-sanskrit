{
  "SA10n2980:3": "Madhyamakāvatāra-kārikā chapter 6",
  "SA10n2980:11": "samāhite cetasi saṁsthito 'sau",
  "SA10n2980:15": "saṁbuddhadharmābhimukho 'bhimukhayām |",
  "SA10n2980:19": "idaṁpratītyodayadṛṣṭatattvaḥ",
  "SA10n2980:23": "prajñavihārāt tunirodham eti || 6.1",
  "SA10n2980:30": "ekena puṁsākṣimatā yatheṣṭaṁ",
  "SA10n2980:34": "deśaṁ samasto 'ndhagaṇaḥ sukhena |",
  "SA10n2980:38": "ākṛṣyate tadvad ihākṣihīnān",
  "SA10n2980:42": "ādāya dhīr yāti guṇāñ jinatvam || 6.2",
  "SA10n2980:49": "dharmān sa gambhīratarān avaiti",
  "SA10n2980:53": "yathāgamenāpi ca yuktitaś ca |",
  "SA10n2980:57": "tathāryanāgārjunanītitas tān",
  "SA10n2980:61": "yathāsthitaprakriyayā bravīmi || 6.3",
  "SA10n2980:68": "pṛthagjanatve 'pi niśamya śūnyatāṁ",
  "SA10n2980:72": "pramodam antar labhate muhurmuhuḥ |",
  "SA10n2980:76": "prasādajāsrāvilajātalocanas",
  "SA10n2980:80": "tanūruhotphullatanuś ca jāyate || 6.4 (1)",
  "SA10n2980:93": "yas tasya saṁbuddhadhiyo 'sti bījaṁ",
  "SA10n2980:97": "tattvopadeśasya ca bhājanaṁ saḥ |",
  "SA10n2980:101": "ākhyeyam asmai paramārthasatyaṁ",
  "SA10n2980:105": "tadanvayās tasya guṇā bhavanti || 6.5",
  "SA10n2980:112": "śīlaṁ samādāya sadaiva vartate",
  "SA10n2980:116": "dadāti dānaṁ karuṇāṁ ca sevate |",
  "SA10n2980:120": "titikṣate tatkuśalaṁ ca bodhaye",
  "SA10n2980:124": "praṇāmayaty eva jagadvimuktaye || 6.6",
  "SA10n2980:131": "saṁbodhisattveṣu karoti gauravam",
  "SA10n2980:135": "udāragambhīranaye vicakṣaṇaḥ |",
  "SA10n2980:139": "labheta bhūmiṁ muditāṁ janaḥ kramāt",
  "SA10n2980:143": "tadarthinaiṣā padavī niśāmyatām || 6.7",
  "SA10n2980:150": "tebhyas ta eva na bhavanti kutaḥ parebhyo",
  "SA10n2980:154": "dvābhyāṁ na cāpi kuta eva vinaiva hetum |",
  "SA10n2980:164": "tasmād dhi tasya bhavane na guṇo 'sti kaścij",
  "SA10n2980:168": "jātasya janma punar eva ca naiva yuktam || 6.8",
  "SA10n2980:175": "jātasya janmani punaḥ parikalpyamāne",
  "SA10n2980:179": "naivāṅkurādaya iha prabhavaṁ labheran |",
  "SA10n2980:183": "bījasya ca prabhava eva bhaved bhavāntaṁ",
  "SA10n2980:187": "tenaiva tasya hi kathaṁ ca bhaved vināśaḥ || 6.9",
  "SA10n2980:194": "saṁsthānavarṇarasavīryavipākabhedāḥ",
  "SA10n2980:198": "syur nāṅkurasya tava kāraṇato vibhinnāḥ |",
  "SA10n2980:202": "prāgātmabhāvam avadhūya tadanyarūpam",
  "SA10n2980:206": "āpadyate yadi tadāsya kathaṁ hi tattvam || 6.10",
  "SA10n2980:213": "bījād ananya iha te yadi cāṅkuraḥ syād",
  "SA10n2980:217": "gṛhyeta naiva hi sa bījam ivāṅkurākhyaḥ |",
  "SA10n2980:221": "gṛhyeta vā tad api nāma yathāṅkuro 'yaṁ",
  "SA10n2980:225": "tattvāt tayor iti na caitad ato 'bhyupeyam || 6.11",
  "SA10n2980:232": "loko 'pi caikyam anayor iti nābhyupaiti",
  "SA10n2980:236": "naṣṭe 'pi paśyati yataḥ phalam eṣa hetau |",
  "SA10n2980:240": "tasmān na tattvata idaṁ na ca lokataś ca",
  "SA10n2980:244": "yuktaṁ svato bhavati bhāva iti prakalpam || 6.12 (2)",
  "SA10n2980:257": "janyasya caiva janakasya ca karmaṇaś ca",
  "SA10n2980:261": "kartuś ca janmani bhavet svata iṣyamāṇe |",
  "SA10n2980:265": "aikyaṁ na caikyam anayor iti nābhyupeyaṁ",
  "SA10n2980:269": "janma svato vihitavistaradoṣasakteḥ || 6.13",
  "SA10n2980:276": "anyat pratītya yadi nāma paro 'bhaviṣyaj",
  "SA10n2980:280": "jāyeta tarhi bahulaḥ śikhino 'ndhakāraḥ |",
  "SA10n2980:284": "sarvasya janma ca bhavet khalu sarvataś ca",
  "SA10n2980:288": "tulyaṁ paratvam akhile 'janake 'pi yasmāt || 6.14",
  "SA10n2980:295": "śakyaṁ prakartum iti kāryam ato niruktaṁ",
  "SA10n2980:299": "śaktaṁ yad asya janane sa paro 'pi hetuḥ |",
  "SA10n2980:303": "janmaikasantatigatāj janakāc ca tasmāc",
  "SA10n2980:307": "chālyaṅkurasya na tathā ca yavāditaś cet || 6.15",
  "SA10n2980:314": "iṣṭā yathā na janakā na ca śaktiyuktā",
  "SA10n2980:318": "naivaikasantatigatāḥ sadṛśā na caiva |",
  "SA10n2980:322": "śālyaṅkurasya yavakesarakiṁśukādyā",
  "SA10n2980:326": "no śālibījam api tasya tathā paratvāt || 6.16",
  "SA10n2980:333": "asty aṅkuraś ca na hi bījasamānakālo",
  "SA10n2980:337": "bījaṁ kutaḥ paratayāstu vinā paratvam |",
  "SA10n2980:341": "janmāṅkurasya na hisidhyati tena bījāt",
  "SA10n2980:345": "saṁtyajyatāṁ parata udbhavatīti pakṣaḥ || 6.17",
  "SA10n2980:352": "antadvayasya namanonnamane tulāyā",
  "SA10n2980:356": "dṛṣṭe yathā na khalu naiva samānakāle |",
  "SA10n2980:360": "syātāṁ tathā janakajanyanirodhajātī",
  "SA10n2980:364": "yady ekadā tad asad atra vinaikakālam || 6.18",
  "SA10n2980:371": "janmonmukhaṁ na sad idaṁ yadi jāyamānaṁ",
  "SA10n2980:375": "nāśonmukhaṁ sad api nāma niruddhyamānam |",
  "SA10n2980:379": "iṣṭaṁ tadā katham idaṁ tulayā samānaṁ",
  "SA10n2980:383": "kartrā vinā janir iyaṁ na ca yuktarūpā || 6.19",
  "SA10n2980:390": "cakṣurdhiyaḥ svajanakaiḥ khalu cakṣurādyaiḥ",
  "SA10n2980:394": "saṁjñādibhiś ca sahabhāvibhir ekakālaiḥ |",
  "SA10n2980:398": "anyatvam asti yadi kiṁ bhavanena satyāṁ",
  "SA10n2980:402": "nāsyāḥ satītvam atha ced vihito 'tra doṣaḥ || 6.20",
  "SA10n2980:409": "janyaṁ paraṁ ca janayej janakaḥ sa hetuḥ",
  "SA10n2980:413": "sad vātha cāsad ubhayaṁ vigatadvayaṁ vā | (3)",
  "SA10n2980:426": "sac cet kim asya janakair asato 'pi kiṁ tair",
  "SA10n2980:430": "dvaite 'pi taiḥ kim atha kiṁ vigatadvaye taiḥ || 6.21",
  "SA10n2980:438": "yuktyā kim atra khalu varṇitayā kriyeta",
  "SA10n2980:442": "lokaḥ sthitaḥ svadṛśi yena mataḥ pramāṇam |",
  "SA10n2980:446": "lokaś ca nāma parataḥ parabhāvam eti",
  "SA10n2980:450": "tenāsti janma parataḥ kim ihopapattyā || 6.22",
  "SA10n2980:457": "samyagmṛṣādarśanalabdhabhāvaṁ",
  "SA10n2980:461": "rūpadvayaṁ bibhrati sarvabhāvāḥ |",
  "SA10n2980:465": "samyagdṛśāṁ yo viṣayaḥ sa tattvaṁ",
  "SA10n2980:469": "mṛṣādṛśāṁ saṁvṛtisatyam uktam || 6.23",
  "SA10n2980:476": "mṛṣādṛśe 'pi dvividhā matā hi",
  "SA10n2980:480": "spaṣṭendriyā doṣavadindriyāś ca |",
  "SA10n2980:484": "sadindriyajñānam apekṣya mithyā",
  "SA10n2980:488": "jñānaṁ mataṁ doṣavadindriyāṇām || 6.24",
  "SA10n2980:495": "vinopaghātena yad indriyāṇāṁ",
  "SA10n2980:499": "ṣaṇṇām api grāhyam avaiti lokaḥ |",
  "SA10n2980:503": "satyaṁ hi tal lokata eva śeṣaṁ",
  "SA10n2980:507": "vikalpitaṁ lokata eva mithyā || 6.25",
  "SA10n2980:514": "ajñānanidrāpracalāyamānais",
  "SA10n2980:518": "tīrthair yathāsvaṁ parikalpitā ye |",
  "SA10n2980:522": "māyāmarīcyādiṣu kalpitāś ca",
  "SA10n2980:526": "teṣām atattvaṁ khalu lokato 'pi || 6.26",
  "SA10n2980:533": "na bādhate jñānam ataimirāṇāṁ",
  "SA10n2980:537": "yathopalabdhis timirekṣaṇāṇām |",
  "SA10n2980:541": "tathāmalajñānatiraskṛtānāṁ",
  "SA10n2980:545": "dhiyāsti bādho na dhiyo 'malāyāḥ || 6.27",
  "SA10n2980:552": "mohaḥ svabhāvāvaraṇād dhi saṁvṛtiḥ",
  "SA10n2980:556": "satyaṁ tayā khyāti yad eva kṛtrimam |",
  "SA10n2980:560": "jagāda tat saṁvṛtisatyam ity asau",
  "SA10n2980:564": "muniḥ padārthaṁ kṛtakañ ca saṁvṛtiḥ || 6.28 (4)",
  "SA10n2980:577": "vikalpitaṁ yat timiraprabhāvāt",
  "SA10n2980:581": "keṣādirūpaṁ vitathaṁ tad eva |",
  "SA10n2980:585": "yenātmanā paśyati śuddhadṛṣṭis",
  "SA10n2980:589": "tat tattvaṁ ity evam ihāpy avaihi || 6.29",
  "SA10n2980:596": "lokaḥ pramāṇaṁ yadi tattvadarśī",
  "SA10n2980:600": "syāl loka evety aparaiḥ kim āryaiḥ |",
  "SA10n2980:604": "kim āryamārgeṇa bhavec ca kāryaṁ",
  "SA10n2980:608": "mūḍhaḥ pramāṇaṁ na hi nāma yuktaḥ || 6.30",
  "SA10n2980:615": "lokaḥ pramāṇaṁ na hi sarvathātas",
  "SA10n2980:619": "tattvādhikāre na ca lokabādhā |",
  "SA10n2980:623": "syāl lokabādhā yadi laukikārtho",
  "SA10n2980:627": "lokapratītyaiva nirākriyeta || 6.31",
  "SA10n2980:634": "uptvāpi lokaḥ khalu bījamātraṁ",
  "SA10n2980:638": "bravīti putro janito mayaiṣaḥ |",
  "SA10n2980:642": "uptas taruś ceti paraiti yasmāj",
  "SA10n2980:646": "janmānyatas tena na lokato 'pi || 6.32",
  "SA10n2980:653": "yato na bījāt paratāṅkurasya",
  "SA10n2980:657": "saty aṅkure bījam ato na naṣṭam |",
  "SA10n2980:661": "eko yato nāsti tato 'pi bījaṁ",
  "SA10n2980:665": "saty aṅkure 'stīti na vācyam eva || 6.33",
  "SA10n2980:672": "svalakṣaṇaṁ ced bhavati pratītya",
  "SA10n2980:676": "tasyāpavāde sati bhāvanāśāt |",
  "SA10n2980:680": "syāc chūnyatā bhāvavināśahetur",
  "SA10n2980:684": "yuktaṁ na caitan na tato 'sti bhāvaḥ || 6.34",
  "SA10n2980:691": "arvāṅ na tattvātmakarūpato 'mī",
  "SA10n2980:695": "sthitiṁ labhante pravicāryamāṇāḥ |",
  "SA10n2980:699": "yataḥ padārthā na tato vicāraḥ",
  "SA10n2980:703": "karyo hi lokavyavahārasatye || 6.35",
  "SA10n2980:710": "tattvādhikāre hi yayaiva yuktyā",
  "SA10n2980:714": "svasmāt parasmāc ca na janma yuktam |",
  "SA10n2980:718": "yuktyā tayaiva vyavahārato 'pi",
  "SA10n2980:722": "na yujyate kena tavāstu janma || 6.36",
  "SA10n2980:729": "śūnyāḥ padārthāḥ pratibimbakādyāḥ",
  "SA10n2980:733": "sāmagryapekṣā na hi na prasiddhāḥ | (5)",
  "SA10n2980:746": "yathā ca śūnyāt pratibimbakādeś",
  "SA10n2980:750": "cetas tadākāram upaiti janma || 6.37",
  "SA10n2980:757": "evaṁ hi śūnyā api sarvabhāvāḥ",
  "SA10n2980:761": "śūnyebhya eva prabhavaṁ prayānti |",
  "SA10n2980:765": "nocchedinas te na ca śāśvatāś ca",
  "SA10n2980:769": "satyadvaye 'pi prakṛter abhāvāt || 6.38",
  "SA10n2980:776": "yasmāt svarūpeṇa na tam niruddhaṁ",
  "SA10n2980:780": "ciraṁ niruddhād api karmaṇo 'taḥ |",
  "SA10n2980:784": "kvacid vinaivālayam asya śakteḥ",
  "SA10n2980:788": "phalaṁ samutpadyata ity avaihi || 6.39",
  "SA10n2980:795": "svapnopalabdhān viṣayān avetya",
  "SA10n2980:799": "bodhe 'pi mūḍhasya yathaiva saṅgaḥ |",
  "SA10n2980:803": "saṁjāyate tadvad asatsvabhāvāt",
  "SA10n2980:807": "phalaṁ niruddhād api karmaṇo 'sti || 6.40",
  "SA10n2980:814": "tulye 'py asattve viṣayasya yadvat",
  "SA10n2980:818": "keśākṛtiṁ taimirikaḥ paraiti |",
  "SA10n2980:822": "na sarvabhāvākṛtim ity avaihi",
  "SA10n2980:826": "tathā vipakvān na punar vipākam || 6.41",
  "SA10n2980:833": "ato hi kṛṣṇād aśubho vipākaḥ",
  "SA10n2980:837": "śubhād vipākaḥ śubha eva dṛṣṭaḥ |",
  "SA10n2980:841": "śubhāśubhābhāvadhiyaś ca mokṣaś",
  "SA10n2980:845": "cintāniṣedhaḥ phalakarmaṇāṁ ca || 6.42",
  "SA10n2980:852": "evaṁ hi gambhīratarān padārthān",
  "SA10n2980:856": "na vetti yas taṁ prati deśaneyam |",
  "SA10n2980:860": "asty ālayaḥ pudgala eva cāsti",
  "SA10n2980:864": "skandhā ime vā khalu kevalāś ca || 6.43",
  "SA10n2980:871": "ahaṁ mamety eva yathā dideśa",
  "SA10n2980:875": "satkāyadṛṣṭer vigame 'pi buddhaḥ |",
  "SA10n2980:879": "tathā 'svabhāvān api sarvabhāvān",
  "SA10n2980:883": "astīti neyārthatayā dideśa || 6.44 (6)",
  "SA10n2980:896": "prajñāvihārī sa hi bodhisattvo",
  "SA10n2980:900": "vijñānamātrapratividdhatattvaḥ |",
  "SA10n2980:904": "grāhyaṁ vinā grāhakatām apaśyan",
  "SA10n2980:908": "vijñānamātraṁ tribhavaṁ paraiti || 6.45",
  "SA10n2980:915": "yathā taraṅgā mahato 'mburāśeḥ",
  "SA10n2980:919": "samīraṇapreraṇayodbhavanti |",
  "SA10n2980:923": "tathālayākhyād api sarvabījād",
  "SA10n2980:930": "vijñānamātraṁ bhavati svaśakteḥ || 6.46",
  "SA10n2980:937": "saṁvidyate 'taḥ paratantrarūpaṁ",
  "SA10n2980:941": "prajñaptisadvastunibandhanaṁ yat |",
  "SA10n2980:945": "bāhyaṁ vinā grāhyam udeti sac ca",
  "SA10n2980:949": "sarvaprapañcāviṣayasvarūpam || 6.47",
  "SA10n2980:956": "vinaiva bāhyaṁ kva yathāsti cittaṁ",
  "SA10n2980:960": "svapne yathā ced idam eva cintyam |",
  "SA10n2980:964": "svapne 'pi me naiva hi cittam asti",
  "SA10n2980:968": "yadā tadā nāsti nidarśanaṁ te || 6.48",
  "SA10n2980:975": "svapnasya bodhe smaraṇān mano 'sti",
  "SA10n2980:979": "yady astu bāhyo viṣayo 'pi tadvat |",
  "SA10n2980:983": "yathā mayā dṛṣṭam iti smṛtis te",
  "SA10n2980:987": "bāhye 'pi tadvat smṛtisambhavo 'sti || 6.49",
  "SA10n2980:994": "cakṣurdhiyaḥ sambhava eva middhe",
  "SA10n2980:998": "nāsty asti vai mānasam eva cetaḥ |",
  "SA10n2980:1002": "tadākṛtau bāhyatayā niveśaḥ",
  "SA10n2980:1006": "svapne yathehāpi tathā mataṁ cet || 6.50",
  "SA10n2980:1013": "bāhyo yathā te viṣayo na jātaḥ",
  "SA10n2980:1017": "svapne tathā naiva mano 'pi jātam |",
  "SA10n2980:1021": "cakṣuś ca cakṣurviṣayaś ca tajjaṁ",
  "SA10n2980:1025": "cittaṁ ca sarvaṁ trayam apy alīkam || 6.51 (7)",
  "SA10n2980:1038": "śrotrādiśeṣaṁ trayam apy ajātaṁ",
  "SA10n2980:1042": "svapne yathehāpi tathā prabodhe |",
  "SA10n2980:1046": "mṛṣā padārthā na tad asti cittaṁ",
  "SA10n2980:1050": "na gocaraḥ santi ca nendriyāṇi || 6.52",
  "SA10n2980:1057": "yāvan na bodhaṁ labhate 'sti tāvat",
  "SA10n2980:1061": "trayaṁ hi tasyeha yathāprabodhe |",
  "SA10n2980:1065": "sati prabodhe trayam apy asatyaṁ",
  "SA10n2980:1069": "sa mohanidrākṣayatas tathaiva || 6.53",
  "SA10n2980:1076": "keśākṛtiṁ yāṁ timiraprabhāvād",
  "SA10n2980:1080": "dhiyā yayā vetti sa taimirākṣaḥ |",
  "SA10n2980:1084": "dvayaṁ hi tadbodham apekṣya satyaṁ",
  "SA10n2980:1088": "spaṣṭārthadṛṣṭer dvayam apy alīkam || 6.54",
  "SA10n2980:1095": "jñeyaṁ vinā syād yadi nāma buddhis",
  "SA10n2980:1099": "tatkeśadeśānugalocanasya |",
  "SA10n2980:1103": "vitaimirasyāpi ca keśabuddhiḥ",
  "SA10n2980:1107": "syād eva na tv evam ato 'sti naitat || 6.55",
  "SA10n2980:1114": "dhīśaktipako 'sti na śuddhadṛṣṭer",
  "SA10n2980:1118": "yatas tato dhīr na hi jāyate 'sya |",
  "SA10n2980:1122": "na jñeyasadbhāvaviyogataś cet",
  "SA10n2980:1126": "tacchaktyabhāvān na hi siddham etat || 6.56",
  "SA10n2980:1133": "jātasya śakter na hi sambhavo 'sti",
  "SA10n2980:1137": "nājātarūpasya ca śaktir asti |",
  "SA10n2980:1141": "viśeṣaṇaṁ nāsti vinā viśeṣyaṁ",
  "SA10n2980:1145": "vandhyāsutasyāpi ca tatprasaṅgaḥ || 6.57",
  "SA10n2980:1152": "bhaviṣyatā ced vyapadeśa iṣṭaḥ",
  "SA10n2980:1156": "śaktiṁ vinā nāsti hi bhāvitāsya |",
  "SA10n2980:1160": "parasparāyāśrayaṇī ca siddhir",
  "SA10n2980:1164": "asiddhir eveti vadanti santaḥ || 6.58",
  "SA10n2980:1171": "niruddhaśakteḥ paripākataḥ syād",
  "SA10n2980:1175": "yady anyaśakteḥ parasambhavaḥ syāt |",
  "SA10n2980:1179": "santānināṁ tatra mitho 'sti bhedaḥ",
  "SA10n2980:1183": "sarvasya sarvaprabhavas tataḥ syād || 6.59 (8)",
  "SA10n2980:1196": "santānino yady api tatra bhinnāḥ",
  "SA10n2980:1200": "santānabhedo 'sti hi naiva teṣām |",
  "SA10n2980:1204": "tato na doṣā iti sādhyam etat",
  "SA10n2980:1208": "abhedasantānagater ayogāt || 6.60",
  "SA10n2980:1215": "maitropaguptāśrayiṇo hi dharmā",
  "SA10n2980:1219": "na hy ekasantānagatāḥ paratvāt |",
  "SA10n2980:1223": "svalakṣaṇenāpi pṛthak pṛthag ye",
  "SA10n2980:1227": "te 'py ekasantānagatā na yuktāḥ || 6.61",
  "SA10n2980:1234": "cakṣurdhiyo janma yataḥ svaśakter",
  "SA10n2980:1238": "ājāyate 'nantaram eva tasyāḥ |",
  "SA10n2980:1242": "śakteḥ svavijñānasamāśrayasya",
  "SA10n2980:1246": "rūpīndriyaṁ cakṣur iti pratītiḥ || 6.62",
  "SA10n2980:1253": "bahir vinā rūpam iha svabījān",
  "SA10n2980:1257": "nīlādinirbhāsitayodbhavantīm |",
  "SA10n2980:1261": "vijñaptim akṣiprabhavām abuddhvā",
  "SA10n2980:1265": "grāhyaṁ jano bāhyam avaiti cittāt || 6.63",
  "SA10n2980:1272": "svapne vinārthāntaram eva rūpaṁ",
  "SA10n2980:1276": "yathā tadākāram udeti cetaḥ |",
  "SA10n2980:1280": "svaśaktipākād iha jāgrato 'pi",
  "SA10n2980:1284": "tathāsti bāhyena vinā manaś cet || 6.64",
  "SA10n2980:1291": "nīlādinirbhāsam udeti cetaḥ",
  "SA10n2980:1295": "svapne yathā mānasam akṣyabhāve |",
  "SA10n2980:1299": "kasmād ihāndhasya tathākṣyapāye",
  "SA10n2980:1303": "svabījapākād udayaṁ na yāti || 6.65",
  "SA10n2980:1310": "svapne 'sti ṣaṣṭhasya hi śaktipāko",
  "SA10n2980:1314": "na jāgrato 'stīti sacet tava syāt |",
  "SA10n2980:1318": "yatheha ṣaṣṭhasya na śaktipākaḥ",
  "SA10n2980:1322": "svapne tathāsann iti kiṁ na vetsi || 6.66",
  "SA10n2980:1329": "akṣyor abhāvo 'sya yathā na hetuḥ",
  "SA10n2980:1333": "svapne 'pi middhaṁ na tathaiva hetuḥ |",
  "SA10n2980:1337": "svapne 'pi tadrūpam ato 'bhyupeyaṁ",
  "SA10n2980:1341": "cakṣur mṛṣāgocarabodhihetuḥ || 6.67",
  "SA10n2980:1348": "yaṁ yaṁ parīhāram ayaṁ bravīti",
  "SA10n2980:1352": "taṁ taṁ pratijñāsamam asya paśyan || (9)",
  "SA10n2980:1365": "nivārayed vādam amuṁ na buddhā",
  "SA10n2980:1369": "vastu kvacin nāma sad ity uśanti || 6.68",
  "SA10n2980:1376": "pūrṇāṁ mahīṁ saṅkalayā ca yogī",
  "SA10n2980:1380": "gurūpadeśād api yat paraiti |",
  "SA10n2980:1384": "tatrāpi paśyet trayam apy ajātaṁ",
  "SA10n2980:1388": "mithyāmanaskāratayopadeśāt || 6.69",
  "SA10n2980:1395": "yathā 'kṣibuddhau viṣayākṛtis te",
  "SA10n2980:1399": "tathāśubhāyāṁ manaso yadi syāt |",
  "SA10n2980:1403": "taddeśabuddher itarasya tadvat",
  "SA10n2980:1407": "syād eva bodho na mṛṣā ca tat syāt || 6.70",
  "SA10n2980:1414": "toyaṁ vahantyām api pūyabuddhiḥ",
  "SA10n2980:1418": "pretasya nadyāṁ timirākṣatulyā |",
  "SA10n2980:1422": "saṁkṣepatas tv artham amuṁ paraihi",
  "SA10n2980:1426": "jñeyaṁ yathā nāsty api dhīs tatheti || 6.71",
  "SA10n2980:1433": "grāhyaṁ vinā grāhakatāviyuktaṁ",
  "SA10n2980:1437": "dvayena śūnyaṁ paratantrarūpam |",
  "SA10n2980:1441": "yady asti kenāsya paraiṣi sattām",
  "SA10n2980:1445": "agṛhyamāṇaṁ ca sad ity ayuktam || 6.72",
  "SA10n2980:1452": "tenaiva tasyānubhavo na siddhaḥ",
  "SA10n2980:1456": "siddhaḥ smṛter uttarakālataś cet |",
  "SA10n2980:1460": "asiddhasiddhyartham asiddham etan",
  "SA10n2980:1464": "nirucyamānaṁ na hi sādhanāya || 6.73",
  "SA10n2980:1471": "kāmaṁ svasaṁvedanasiddhir astu",
  "SA10n2980:1475": "smartuḥ smṛter naiva tathāpi yuktā |",
  "SA10n2980:1479": "ajñānasantānajavat paratvād",
  "SA10n2980:1483": "dhetur viśeṣān api caiṣa hanyāt || 6.74",
  "SA10n2980:1490": "yenānubhūto viṣayas tato 'sya",
  "SA10n2980:1494": "smartuḥ paratvaṁ na hi me 'sti yasmāt |",
  "SA10n2980:1498": "tato mayā dṛṣṭam iti smṛtiḥ syād",
  "SA10n2980:1502": "eṣā ca lokavyavahāranītiḥ || 6.75",
  "SA10n2980:1509": "tasmāt svasaṁvedanam asti naiva",
  "SA10n2980:1513": "kenānyatantragrahaṇaṁ tava syāt |",
  "SA10n2980:1517": "kartuś ca karmakriyayoś ca naikyaṁ",
  "SA10n2980:1521": "tenaiva tasya grahaṇaṁ na yuktam || 6.76 (10)",
  "SA10n2980:1534": "ajñāyamānātmakam apy ajātaṁ",
  "SA10n2980:1538": "bhāvo yadi syāt paratantrarūpaḥ |",
  "SA10n2980:1542": "vandhyāsutenāpakṛtaṁ parasya",
  "SA10n2980:1546": "kiṁ nāma yenāsya na vetti sattvam || 6.77",
  "SA10n2980:1553": "yadānyatantraṁ na samasti kiṁcit",
  "SA10n2980:1557": "kiṁ sāṁvṛtānāṁ hi nibandhanaṁ syāt |",
  "SA10n2980:1561": "dravyasya lobhena parasya naṣṭāḥ",
  "SA10n2980:1565": "sarvā vyavasthā api lokasiddhāḥ | 6.78",
  "SA10n2980:1572": "ācāryanāgārjunapādamārgād",
  "SA10n2980:1576": "bahirgatānāṁ na śivābhyupāyaḥ |",
  "SA10n2980:1580": "bhraṣṭā hi te saṁvṛtitattvasatyāt",
  "SA10n2980:1584": "tadbhraṁśataś cāsti na mokṣasiddhiḥ || 6.79",
  "SA10n2980:1591": "upāyabhūtaṁ vyavahārasatyam",
  "SA10n2980:1595": "upeyabhūtaṁ paramārthasatyam |",
  "SA10n2980:1599": "tayor vibhāgaṁ na paraiti yo vai",
  "SA10n2980:1603": "mithyāvikalpaiḥ sa kumārgayātaḥ | 6.80",
  "SA10n2980:1610": "na saṁvṛtiś cāpi mayābhyupetā",
  "SA10n2980:1614": "yathā tvayeṣṭaṁ paratantrarūpam |",
  "SA10n2980:1618": "lokānurodhāt tv asatīty amīṣāṁ",
  "SA10n2980:1622": "satīti kāryārtham ahaṁ bravīmi || 6.81",
  "SA10n2980:1629": "skandhān samutsṛjya śivapraveśe",
  "SA10n2980:1633": "yathārhatāṁ nāsti tathaiva na syāt |",
  "SA10n2980:1637": "lokasya cet tadvad imāṁ satīti",
  "SA10n2980:1641": "brūyām ahaṁ naiva hi lokato 'pi || 6.82",
  "SA10n2980:1648": "niṣidhyatāṁ lokata eva caiṣā",
  "SA10n2980:1652": "na lokabādhā bhavato yadi syāt |",
  "SA10n2980:1656": "loko bhavāṁś ceha vivādam etu",
  "SA10n2980:1660": "paścād balīyāṁsam ahaṁ śrayiṣye || 6.83",
  "SA10n2980:1667": "vijñānamātraṁ tribhavaṁ paraiti",
  "SA10n2980:1671": "yad bodhisattvo 'bhimukho 'bhimukhyām |",
  "SA10n2980:1675": "nityātmakartṛpratiṣedhabodhāt",
  "SA10n2980:1679": "prapadyate kartṛ sa cittamātram || 6.84",
  "SA10n2980:1686": "uktaṁ cāto dhīmatāṁ dhīvivṛddhyai",
  "SA10n2980:1690": "sarvajñenottuṅgatīrthyādribhedi | (11)",
  "SA10n2980:1703": "sūtre tasminn āryalaṁkāvatāre",
  "SA10n2980:1707": "sandhyucchittau vāṅmayaṁ vajram etat || 6.85",
  "SA10n2980:1714": "tasmin tasmin varṇitāḥ śāstra ete",
  "SA10n2980:1718": "tīrthyair yuktyā pudgalādyā yathāsvam |",
  "SA10n2980:1722": "kartṛtvenāpaśyatā tān jinena",
  "SA10n2980:1726": "lokasyoktaṁ cittamātraṁ tu kartṛ || 6.86",
  "SA10n2980:1733": "buddho yadvad buddhatattvo niruktas",
  "SA10n2980:1737": "tadval lokaś cittamātrapradhānaḥ |",
  "SA10n2980:1741": "uktaḥ sūtre cittamātraṁ niṣedho",
  "SA10n2980:1745": "no rūpasyetīha sūtrārtha evam || 6.87",
  "SA10n2980:1752": "rūpam eva yadi tatra niṣiddhaṁ",
  "SA10n2980:1756": "cittamātram idam ity avagamya |",
  "SA10n2980:1760": "mohakarmajam uvāca kimarthaṁ",
  "SA10n2980:1764": "cittam atra punar eva mahātmā || 6.88",
  "SA10n2980:1771": "sattvalokam atha bhājanalokaṁ",
  "SA10n2980:1775": "cittam eva racayaty aticitram |",
  "SA10n2980:1779": "karmajaṁ hi jagad uktam aśeṣaṁ",
  "SA10n2980:1783": "karma cittam avadhūya ca nāsti || 6.89",
  "SA10n2980:1790": "rūpam asti khalu yady api tasya",
  "SA10n2980:1794": "kartṛtā tu na hi cittavad asti |",
  "SA10n2980:1798": "tena kartur itarasya hi cittād",
  "SA10n2980:1802": "vāraṇaṁ na khalu rūpaniṣedhaḥ || 6.90",
  "SA10n2980:1809": "pañcāpy ete santi lokaprasiddhāḥ",
  "SA10n2980:1813": "skandhās tattve laukike 'vasthitasya |",
  "SA10n2980:1817": "tattvajñānasyodaye vāñchite vai",
  "SA10n2980:1821": "pañcāpy ete yogināṁ naivajātāḥ || 6.91",
  "SA10n2980:1828": "rūpābhāve mā grahīś cittasattāṁ",
  "SA10n2980:1832": "rūpābhāvaṁ cittasattve ca mā gāḥ |",
  "SA10n2980:1836": "prajñānītau sūtra ete samānaṁ",
  "SA10n2980:1840": "buddhaiḥ kṣiptā varṇitāś cābhidharme || 6.92",
  "SA10n2980:1847": "bhitvāpy etāṁ satyayor ānupūrvīṁ",
  "SA10n2980:1851": "na dravyaṁ te yāti siddhiṁ niṣiddham |",
  "SA10n2980:1855": "tasmād evaṁprakramād viddhi bhāvān",
  "SA10n2980:1859": "loke jātāṁs tattvataś cādyajātān || 6.93 (12)",
  "SA10n2980:1872": "yatrāpy uktaṁ nāsti dṛśyaṁ bahir vai",
  "SA10n2980:1876": "cittaṁ citraṁ dṛśyate ceti sūtre |",
  "SA10n2980:1880": "rūpe 'tyantaṁ ye prasaktā badhāna",
  "SA10n2980:1884": "rūpaṁ tebhyas tac ca neyārtham ehi || 6.94",
  "SA10n2980:1891": "neyārthatvaṁ cādideśāsya śāstā",
  "SA10n2980:1895": "yuktā yuktyā cāpi neyārthatāsya |",
  "SA10n2980:1899": "sūtrasyānyasyāpi caivaṁvidhasya",
  "SA10n2980:1903": "neyārthatvaṁ dyotayaty āgamo 'yam || 6.95",
  "SA10n2980:1910": "jñeyaṁ vinā jñānanirākṛtiś ca",
  "SA10n2980:1914": "labhyā sukheneti vadanti buddhāḥ |",
  "SA10n2980:1918": "jñeyasya pūrvaṁ pratiṣedham eva",
  "SA10n2980:1922": "jñeya'sati jñānaniṣedhasiddheḥ || 6.96",
  "SA10n2980:1929": "evaṁ jñātvā prakriyām āgamasya",
  "SA10n2980:1933": "vyākhyātārthaṁ yac ca neyārtham uktam |",
  "SA10n2980:1937": "sūtraṁ buddhvā nīyatāṁ yan na tattvaṁ",
  "SA10n2980:1941": "nītārthaṁ ca jñāyatāṁ śūnyatārtham || 6.97",
  "SA10n2980:1948": "dvābhyāṁ na cāpi jananaṁ khalu yuktarūpaṁ",
  "SA10n2980:1952": "doṣāḥ patanti vihitās tuta eva yasmāt |",
  "SA10n2980:1956": "na lokato 'pi na ca tattvata iṣṭam etad",
  "SA10n2980:1960": "ekaikato na jananasya yato 'sti siddhiḥ || 6.98",
  "SA10n2980:1967": "hetuṁ vinaiva yadi janma bhavet tadānīṁ",
  "SA10n2980:1971": "syāt sarvato 'pi sakalasya sadaiva janma |",
  "SA10n2980:1975": "bījādikasya śataśaḥ phalasaṁbhavāya",
  "SA10n2980:1979": "lokaś ca saṁgraham ayaṁ khalu naiva kuryāt || 6.99",
  "SA10n2980:1986": "gṛhyeta naiva ca jagad yadi hetuśūnyaṁ",
  "SA10n2980:1990": "syād yadvad eva gaganotpalavarṇagandhau |",
  "SA10n2980:1994": "gṛhnāsi lokam aticitrataraṁ ca tasmāl",
  "SA10n2980:1998": "lokaṁ svabuddhim iva kāraṇataḥparaihi || 6.100",
  "SA10n2980:2005": "bhūtāni tāni na hi nāma tathātmakāni",
  "SA10n2980:2009": "yenātmanā tava dhiyo viṣayībhavanti |",
  "SA10n2980:2013": "atraiva yasya bahulo 'sti mano'ndhakāro",
  "SA10n2980:2017": "lokaṁ paraṁ sa katham eṣyati samyag eva || 6.101 (13)",
  "SA10n2980:2030": "jñeyasvabhāvaviparītadṛśaṁ paraihi",
  "SA10n2980:2034": "svātmānam eva paralokaniṣedhakāle |",
  "SA10n2980:2038": "taddṛṣṭijātasadṛśāśrayadehavattvād",
  "SA10n2980:2042": "bhūtātmasattvam upayāsi yadā tadeva || 6.102",
  "SA10n2980:2049": "bhūtāni tāni na hi santi yathā tathoktaṁ",
  "SA10n2980:2053": "sāmānyataḥ",
  "SA10n2980:2054": "svaparato dvayataś ca janma |",
  "SA10n2980:2058": "āhetukaṁ ca khalu yena purā niṣiddhaṁ",
  "SA10n2980:2062": "bhūtāny amūny anuditāni na santi tasmāt || 6.103",
  "SA10n2980:2069": "bhāvāḥ svabhāvarahitāḥ svaparobhayasmāj",
  "SA10n2980:2073": "janmāsti hetum anapekṣya ca naiva yasmād |",
  "SA10n2980:2077": "mohas tu yena bahalo ghanavṛndatulyo",
  "SA10n2980:2081": "lokasya tena viṣayāḥ khalu bhānti mithyā || 6.104",
  "SA10n2980:2088": "kaścid yathaiva vitathaṁ timiraprabhāvāt",
  "SA10n2980:2092": "keśadvicandraśikhicandrakamakṣikādi |",
  "SA10n2980:2096": "gṛhṇāti tadvad abudhaḥ khalu mohadoṣād",
  "SA10n2980:2100": "buddhyā vicitram avagacchati saṁskṛtaṁ hi || 6.105",
  "SA10n2980:2107": "mohaṁ pratītya yadi karma vinā na mohād",
  "SA10n2980:2111": "bhūtaṁ tad ity abudha eva pareti nūnam |",
  "SA10n2980:2115": "sadbuddhibhāskaravihīnaghanāndhakāro",
  "SA10n2980:2119": "vidvāṁs tu śūnyam avagacchati mucyate ca || 6.106",
  "SA10n2980:2126": "na tattvataś cet khalu santi bhāvās",
  "SA10n2980:2130": "teṣām asattvaṁ vyavahārato 'pi |",
  "SA10n2980:2134": "syād eva vandhyātanayasya yadvat",
  "SA10n2980:2138": "svabhāvataḥ sattvam ato 'sti teṣām || 6.107",
  "SA10n2980:2145": "keśādayas te na hi nāma jātā",
  "SA10n2980:2149": "ye taimirāder viṣayaṁ prayānti |",
  "SA10n2980:2153": "ta eva tāvat khalu codanīyāḥ",
  "SA10n2980:2157": "paścād avidyātimirānujātāḥ || 6.108",
  "SA10n2980:2164": "svapnaṁ sagandharvapuraṁ marīcyāṁ",
  "SA10n2980:2168": "kam indrajālaṁ pratibimbakādi |",
  "SA10n2980:2172": "paśyasy ajātān yadi tat kathaṁ te",
  "SA10n2980:2176": "tulye 'py asattvena tu tan na yuktam || 6.109",
  "SA10n2980:2183": "ete na tattvena yathaiva jātā",
  "SA10n2980:2187": "na vāpi vandhyāsutavan na yānti |",
  "SA10n2980:2191": "lokasya yad darśanagocaratvaṁ",
  "SA10n2980:2195": "tasmād anaikāntikam etad uktam || 6.110 (14)",
  "SA10n2980:2208": "svenātmanā janma na tattvato 'sti",
  "SA10n2980:2212": "vandhyāsutasyāpi na lokato 'pi",
  "SA10n2980:2216": "tathāsvabhāvena na lokato 'mī",
  "SA10n2980:2220": "jātā na tattvena ca sarvabhāvāḥ || 6.111",
  "SA10n2980:2227": "dharmān jagādādita eva śāntān",
  "SA10n2980:2231": "ataḥ prakṛtyā parinirvṛtāṁś ca |",
  "SA10n2980:2235": "śāstā viyuktān udayena sarvān",
  "SA10n2980:2239": "yatas tato nāsti sad eva janma || 6.112",
  "SA10n2980:2246": "ghaṭādayaḥ santi na tattvato 'mī",
  "SA10n2980:2250": "lokaprasiddhyā tu yathā bhavanti |",
  "SA10n2980:2254": "bhāvā bhaviṣyanti tathaiva sarve",
  "SA10n2980:2258": "syān naiva vandhyāsutavatprasaṅgaḥ || 6.113",
  "SA10n2980:2265": "ahetutaś ceśvarakāraṇādeḥ",
  "SA10n2980:2269": "svasmāt parasmāt dvayataś ca yasmād |",
  "SA10n2980:2273": "utpadyamānā na hi santi bhāvās",
  "SA10n2980:2277": "tasmāt pratītyaprabhavaṁ prayānti || 6.114",
  "SA10n2980:2284": "pratītyabhāvaprabhavena śakyā",
  "SA10n2980:2288": "na kalpanāḥ kalpayituṁ yad etāḥ |",
  "SA10n2980:2292": "tasmāt pratītyodayayuktir eṣā",
  "SA10n2980:2296": "kudṛṣṭijālaṁ sakalaṁ chinatti || 6.115",
  "SA10n2980:2303": "syuḥ kalpanā vastuni vidyamāne",
  "SA10n2980:2307": "parīkṣitaṁ vastu yathā ca nāsti |",
  "SA10n2980:2311": "vinendhanaṁ nāsti yathaiva vahnis",
  "SA10n2980:2315": "tadvad vinā vastu bhavanti naitāḥ || 6.116",
  "SA10n2980:2322": "yā kalpanānāṁ vinivṛttir etat",
  "SA10n2980:2326": "phalaṁ vicārasya budhā vadanti |",
  "SA10n2980:2330": "pṛthagjanāḥ kalpanayaiva baddhā",
  "SA10n2980:2334": "akalpayan muktim upaiti yogī || 6.117",
  "SA10n2980:2341": "na vādalobhād vihito vicāras",
  "SA10n2980:2345": "tattvaṁ tu śāstre kathitaṁ vimuktyai |",
  "SA10n2980:2349": "vyākhyāyamāne yadi nāma tattve",
  "SA10n2980:2353": "bhidāṁ gatāny anyamatāny adoṣaḥ | 6.118",
  "SA10n2980:2360": "svadṛṣṭirāgo 'pi hi kalpanaiva",
  "SA10n2980:2364": "tathānyadṛṣṭāv api yaś ca roṣaḥ | (15)",
  "SA10n2980:2380": "vidhūya rāgaṁ pratighaṁ ca tasmād",
  "SA10n2980:2384": "vicārayan kṣipram upaiti muktim || 6.119",
  "SA10n2980:2391": "satkāyadṛṣṭiprabhavān aśeṣān",
  "SA10n2980:2395": "kleśāṁś ca doṣāṁś ca dhiyā vipaśyan |",
  "SA10n2980:2399": "ātmānam asyā viṣayaṁ ca buddhvā",
  "SA10n2980:2403": "yogī karoty ātmaniṣedham eva || 6.120",
  "SA10n2980:2410": "ātmā tīrthyaiḥ kalpyate nityarūpo",
  "SA10n2980:2414": "'kartābhoktā nirguṇo niṣkriyaś ca |",
  "SA10n2980:2418": "kaṁcit kaṁcid bhedam āśritya tasya",
  "SA10n2980:2422": "bhedaṁ yātāḥ prakriyās tīrthikānām || 6.121",
  "SA10n2980:2429": "itthaṁbhūtasyātmano nāsti sattvaṁ",
  "SA10n2980:2433": "nāhaṁkārasyāśrayaś caiṣa yuktaḥ |",
  "SA10n2980:2437": "vandhyāputrasyeva jāter viyogān",
  "SA10n2980:2441": "no saṁvṛtyāpīṣyate sattvam asya || 6.122",
  "SA10n2980:2448": "śāstre śāstre ye 'sya tīrthyair viśeṣā",
  "SA10n2980:2452": "nirdiśyante tān ajātatvahetur |",
  "SA10n2980:2456": "yasmāt sarvān bādhate svaprasiddhaḥ",
  "SA10n2980:2460": "santy asyāto nāpi sarve viśeṣāḥ || 6.123",
  "SA10n2980:2467": "skandhebhyo 'nyo vidyate nāta ātmā",
  "SA10n2980:2471": "hitvā skandhāṁs tadgrahasyāprasiddheḥ |",
  "SA10n2980:2475": "lokasyāhaṁkārabuddher apīṣṭo",
  "SA10n2980:2479": "naivādhāro 'tadvidām ātmadṛṣṭeḥ || 6.124",
  "SA10n2980:2486": "tiryakto ye kalpaśaḥ saṁpravṛddhā",
  "SA10n2980:2490": "nityājātaṁ te 'pi paśyanti nainam |",
  "SA10n2980:2494": "dṛṣṭvā teṣām apy ahaṁkāravṛttiṁ",
  "SA10n2980:2498": "skandhebhyo 'nyas tena nātmāsti kaścit || 6.125",
  "SA10n2980:2505": "skandhā evālambanaṁ tv ātmadṛṣṭeḥ",
  "SA10n2980:2509": "skandhebhyo 'nyasyātmanaḥ siddhyabhāvāt |",
  "SA10n2980:2513": "skandhān pañcāpy eka icchanti kecic",
  "SA10n2980:2517": "cittaṁ tv ekaṁ niśrayāyātmadṛṣṭeḥ || 6.126",
  "SA10n2980:2524": "skandhā ātmā ced atas tadbahutvād",
  "SA10n2980:2528": "ātmānaḥ syus te 'pi bhūyāṁsa evam || (16)",
  "SA10n2980:2541": "dravyaṁ cātmā prāpnuyāt taddṛśaś ca",
  "SA10n2980:2545": "dravye vṛttau vaiparītyaṁ ca na syāt || 6.127",
  "SA10n2980:2552": "ātmocchedī nirvṛtau syād avaśyaṁ",
  "SA10n2980:2556": "nāśotpādī nirvṛteḥ prāk kṣaṇeṣu |",
  "SA10n2980:2560": "kartur nāśāt tatphalābhāva eva",
  "SA10n2980:2564": "bhuṁjītānyenārjitaṁ karma cānyaḥ || 6.128",
  "SA10n2980:2571": "na syād doṣaḥ santatis tattvataś ced",
  "SA10n2980:2575": "ukto doṣaḥ santateḥ prāgvicāre |",
  "SA10n2980:2579": "skandhā nātmā nāpi cittaṁ ca tasmād",
  "SA10n2980:2583": "ito lokasyāntavattvādyabhāvāt || 6.129",
  "SA10n2980:2590": "ātmābhāvaṁ paśyato yoginaś ca",
  "SA10n2980:2594": "bhāvābhāvaḥ syādavaśyaṁ tadā te |",
  "SA10n2980:2598": "nityātmā cet kṣipyate te tadānīṁ",
  "SA10n2980:2602": "skandhāś cittaṁ vā bhaven nāta ātmā || 6.130",
  "SA10n2980:2609": "rūpādīnāṁ naiva tattvaṁ gataṁ syād",
  "SA10n2980:2613": "ātmābhāvaṁ paśyato yoginas te |",
  "SA10n2980:2617": "rāgādīnāṁ rūpam ālambya vṛtteḥ",
  "SA10n2980:2621": "syād utpattis tatsvarūpāvibodhāt || 6.131",
  "SA10n2980:2628": "skandhā ātmety uktavān yena śāstā",
  "SA10n2980:2632": "skandhā evātmeti tasmān mataś cet |",
  "SA10n2980:2636": "skandhebhyo 'nyasyātmano 'sau niṣedho",
  "SA10n2980:2640": "rūpaṁ nātmetyādisūtrāntarokteḥ || 6.132",
  "SA10n2980:2647": "rūpaṁ nātmā vedanā no na saṁjñā",
  "SA10n2980:2651": "no saṁskārā nāpi vijñānam uktam |",
  "SA10n2980:2655": "sūtre 'nyasmin yena tasmān na hīṣṭaḥ",
  "SA10n2980:2659": "skandhā evātmeti sūtropadeśaḥ || 6.133",
  "SA10n2980:2666": "skandhā ātmety ucyamāne samūhaḥ",
  "SA10n2980:2670": "skandhānāṁ syān naiva tu skandharūpaḥ |",
  "SA10n2980:2674": "no nāthatvaṁ no damaḥ sākṣitā vā",
  "SA10n2980:2678": "tasyāsattvāt syād ato no samūhaḥ || 6.134",
  "SA10n2980:2685": "kūṭasthānāṁ syād rathatvaṁ tadānīṁ",
  "SA10n2980:2689": "tasyāṅgānāṁ tulya ātmā rathena | (17)",
  "SA10n2980:2702": "skandhāṁś copādāya sūtre niruktas",
  "SA10n2980:2706": "tasmān nātmā skandhasaṁhātamātram || 6.135",
  "SA10n2980:2713": "saṁsthānaṁ ced rūpiṇāṁ tasya sattvāt",
  "SA10n2980:2717": "teṣām evātmeti saṁjñā tava syāt |",
  "SA10n2980:2721": "cittādīnāṁ saṁhater ātmatā tu",
  "SA10n2980:2725": "na syād yasmāt saṁniveśo 'sti naiṣām || 6.136",
  "SA10n2980:2732": "nopādātuś caikatā yuktarūpā",
  "SA10n2980:2736": "svopādānaiḥ kartṛkarmaikataivam |",
  "SA10n2980:2740": "syāt kartāsan karma cāstīti ced dhīr",
  "SA10n2980:2744": "no kartāraṁ yad vinā nāsti karma || 6.137",
  "SA10n2980:2751": "bhūmyambutejāṁsi samīraṇaṁ ca",
  "SA10n2980:2755": "vijñānam ākāśam iti pratītya |",
  "SA10n2980:2759": "dhātūn ṣaḍ ātmā muninopadiṣṭaḥ",
  "SA10n2980:2763": "sparśāśrayāṁ ṣaṭ ca sa cakṣurādīm || 6.138",
  "SA10n2980:2770": "dharmān upādāya sa cittacaittān",
  "SA10n2980:2774": "nirucyate yena tato na tattvam |",
  "SA10n2980:2778": "tebhyo 'sya no saṁhatimātratā ca",
  "SA10n2980:2782": "tasmād ahaṁkāramatir na teṣu || 6.139",
  "SA10n2980:2789": "nityātmā ca kṣipyate 'nātmabodhe",
  "SA10n2980:2793": "nāhaṁkārasyāśrayaś cāyam iṣṭaḥ |",
  "SA10n2980:2797": "ātmābhāvajñena kiṁ tat svadṛṣṭer",
  "SA10n2980:2801": "utkhātaś cety ucyate 'tīva citram || 6.140",
  "SA10n2980:2808": "paśyann ahiṁ chidragataṁ svagehe",
  "SA10n2980:2812": "gajo 'tra nāstīti nirastaśaṅkaḥ |",
  "SA10n2980:2816": "jahāti sarpād api nāma bhītim",
  "SA10n2980:2820": "aho hi nāmārjavatā parasya || 6.141",
  "SA10n2980:2827": "skandheṣv ātmā vidyate naiva cāmī",
  "SA10n2980:2831": "santi skandhā nātmanītīha yasmāt |",
  "SA10n2980:2835": "saty anyatve syād iyaṁ kalpanā vai",
  "SA10n2980:2839": "tac cānyatvaṁ nāsty ataḥ kalpanaiṣā || 6.142",
  "SA10n2980:2846": "iṣṭo nātmā rūpavān nāsti yasmād",
  "SA10n2980:2850": "ātmā matvarthīyayogohi nātaḥ | (18)",
  "SA10n2980:2863": "bhede gomān rūpavān apy abhede",
  "SA10n2980:2867": "tattvānyatve rūpato nātmanaḥ staḥ || 6.143",
  "SA10n2980:2874": "rūpaṁ nātmā rūpavān naiva cātmā",
  "SA10n2980:2878": "rūpe nātmā rūpam ātmany asac ca |",
  "SA10n2980:2882": "skandhān evaṁ viddhi sarvāṁś caturdhā",
  "SA10n2980:2886": "viṁśaty aṁśā eta iṣṭāḥ svadṛṣṭeḥ || 6.144",
  "SA10n2980:2893": "etāni tāni śikharāṇi samudgatāni",
  "SA10n2980:2897": "satkāyadṛṣṭivipulācalasaṁsthitāni |",
  "SA10n2980:2901": "nairātmyabodhakuliśena vidāritātmā",
  "SA10n2980:2905": "bhedaṁ prayāti saha tair api dṛṣṭiśailaḥ || 6.145",
  "SA10n2980:2912": "icchanty eke pudgalaṁ dravyasantaṁ",
  "SA10n2980:2916": "tattvānyatvānityanityādyavācyam |",
  "SA10n2980:2920": "ṣaḍvijñānajñeyatā ceṣyate 'sya",
  "SA10n2980:2924": "so 'haṁkārasyaśrayo hīṣyate ca || 6.146",
  "SA10n2980:2931": "naivāvācyaṁ vastusat saṁpratītaṁ",
  "SA10n2980:2935": "yac cittasyāvācyatāṁ naiṣi rūpāt |",
  "SA10n2980:2939": "ātmā kaścid vastusiddho yadi syān",
  "SA10n2980:2943": "nāvācyaḥ syāc cittavat siddharūpaḥ || 6.147",
  "SA10n2980:2950": "yaḥ skandhebhyo 'vācyatāṁ yāta ātmā",
  "SA10n2980:2954": "sattvaṁ siddhaṁ svātmanā tasya mā gāḥ |",
  "SA10n2980:2958": "vastutvenāsiddharūpo ghaṭas te",
  "SA10n2980:2962": "rūpādibhyo 'vācyatāṁ yena yātaḥ || 6.148",
  "SA10n2980:2969": "vijñānaṁ te svātmato 'nanyad iṣṭaṁ",
  "SA10n2980:2973": "rūpādibhyo bhinnarūpaṁ mataṁ ca |",
  "SA10n2980:2977": "vastuny ete dve gatī nāma dṛṣṭe",
  "SA10n2980:2981": "nāsty ātmāto vastudharmair viyogāt || 6.149",
  "SA10n2980:2988": "nāhaṁkārasyāśrayo vastu tasmān",
  "SA10n2980:2992": "nānyaḥ skandhebhyo 'pi na skandharūpaḥ |",
  "SA10n2980:2996": "skandādhāro naiva naivaiṣa tadvān",
  "SA10n2980:3000": "skandhāṁs tūpādāya yāty eṣa siddhim || 6.150",
  "SA10n2980:3007": "svāṅgebhya iṣṭo na ratho yathānyo",
  "SA10n2980:3011": "na cāpy ananyo na ca nāma tadvān || (19)",
  "SA10n2980:3024": "nāṅgeṣu nāṅgāny api tatra nāpi",
  "SA10n2980:3028": "saṁghātamātraṁ na ca sanniveśaḥ || 6.151",
  "SA10n2980:3035": "saṁhātamātraṁ hi ratho yadi syāt",
  "SA10n2980:3039": "kūṭasthiteṣv eva bhaved rathatvam |",
  "SA10n2980:3043": "saṁsthānamātraṁ ca ratho na yuktaḥ",
  "SA10n2980:3047": "santy aṅgināṅgāni vinā na yasmād || 6.152",
  "SA10n2980:3054": "saṁsthānam aṅgeṣu yathā purābhūt",
  "SA10n2980:3058": "pratyekaśas te rathatāṁ gateṣu |",
  "SA10n2980:3062": "tathaiva cen nāsti ratho 'dhunāpi",
  "SA10n2980:3066": "viśliṣṭabhūteṣu yathaiva teṣu || 6.153",
  "SA10n2980:3073": "saṁsthānabhedo yadi cādhunāsti",
  "SA10n2980:3077": "cakrādikasyeha rathatvakāle |",
  "SA10n2980:3081": "gṛhyeta nāmaiṣa na caitad asti",
  "SA10n2980:3085": "saṁsthānamātraṁ na ratho 'sti tasmāt || 6.154",
  "SA10n2980:3092": "na cāṅgavṛndasya sa saṁniveśo",
  "SA10n2980:3096": "vṛndaṁ na kiṁcit tava yena nāma |",
  "SA10n2980:3100": "na nāma kiṁcit khalu yat kathaṁ tat",
  "SA10n2980:3104": "saṁsthānam āśritya bhaviṣyatīha || 6.155",
  "SA10n2980:3111": "yatheṣṭam etat tava tadvad eva",
  "SA10n2980:3115": "hetor asatyasya samāśrayeṇa |",
  "SA10n2980:3119": "asatyarūpaṁ khalu kāryajātam",
  "SA10n2980:3123": "utpadyate sarvam apīty avaihi || 6.156",
  "SA10n2980:3130": "etena rūpādiṣu kumbhabuddhis",
  "SA10n2980:3134": "tathāsthiteṣv ity api naiva yuktam |",
  "SA10n2980:3138": "rūpādayaś cāpi na santy ajātās",
  "SA10n2980:3142": "teṣāṁ na saṁsthānam ato 'pi yuktam || 6.157",
  "SA10n2980:3149": "na tattvato naiva ca lokataś ca",
  "SA10n2980:3153": "sa saptadhā yady api yāti siddhim |",
  "SA10n2980:3157": "svāṅgāny upādāya vinā vicāraṁ",
  "SA10n2980:3161": "prajñapyate lokata eva caiṣaḥ || 6.158",
  "SA10n2980:3168": "aṅgī sa evāvayavī sa kartā",
  "SA10n2980:3172": "rathaḥ sa eveti jane niruktiḥ |",
  "SA10n2980:3176": "siddho 'py upādātṛtayā janānāṁ",
  "SA10n2980:3180": "mā saṁvṛtiṁ nāśaya lokasiddhām || 6.159 (20)",
  "SA10n2980:3193": "yaḥ saptadhā nāsti kathaṁ tu sa syād",
  "SA10n2980:3197": "ity asya sattāṁ labhate na yogī |",
  "SA10n2980:3201": "tattvāvatāro 'pi sukhena vāta",
  "SA10n2980:3205": "itīṣyatām evam ihāsya siddhiḥ || 6.160",
  "SA10n2980:3212": "sattvaṁ rathasyāsti na cet tadānīṁ",
  "SA10n2980:3216": "vināṅgināṅgāny api santi nāsya |",
  "SA10n2980:3220": "dagdhe rathe 'ṅgāni yathā na santi",
  "SA10n2980:3224": "dhīvahnidagdhe 'ṅgini tadvad aṅgam || 6.161",
  "SA10n2980:3231": "ātmāpy upādātṛtayā tatheṣṭaḥ",
  "SA10n2980:3235": "skandhān upādāya jagatpratītyā |",
  "SA10n2980:3239": "dhātūṁs tathā cāyatanāni ṣaḍḍhā",
  "SA10n2980:3243": "karmāpy upādānam asau ca kartā || 6.162",
  "SA10n2980:3250": "nānityatā cāsya na nityatā ca",
  "SA10n2980:3254": "na jāyate naśyati naiva cāyam |",
  "SA10n2980:3258": "na śāsvatatvādi ca vidyate 'sya",
  "SA10n2980:3262": "tattvaṁ na cānyatvam avastusattvāt 6.163",
  "SA10n2980:3269": "ayaṁ sa ātmā jagatāṁ pravṛttā",
  "SA10n2980:3273": "yasmin ahaṁkāramatiḥ sadaiva |",
  "SA10n2980:3277": "yat tasya tasmin mamakārabuddhir",
  "SA10n2980:3281": "udeti mohād avicārabuddhyā || 6.164",
  "SA10n2980:3288": "akartṛkaṁ karma ca nāsti yasmād",
  "SA10n2980:3292": "ātmānam ātmīyam ato vinā 'sat |",
  "SA10n2980:3296": "ātmānam ātmīyam ataḥ sa śūnyaṁ",
  "SA10n2980:3300": "paśyan vimuktiṁ samupaiti yogī || 6.165",
  "SA10n2980:3307": "ghaṭapaṭakaṭasenāḥ kānanaṁ paṅktivṛkṣā",
  "SA10n2980:3311": "gṛhaśakaṭamaṭhādyā ye ca kecit padārthāḥ |",
  "SA10n2980:3315": "vyavaharati jano 'yaṁ yais tathā tān pratīhi",
  "SA10n2980:3319": "vivadati sa munīndro yan na lokena sārddham || 6.166",
  "SA10n2980:3326": "avayavaguṇarāgā lakṣāṇānīndhanādyā",
  "SA10n2980:3330": "avayaviguṇiraktā lakṣyam agnyādayo 'rthāḥ |",
  "SA10n2980:3334": "vihitarathavicārāt saptadhā santi naite",
  "SA10n2980:3338": "sati tu taditarasmin santi lokaprasiddhyā || 6.167",
  "SA10n2980:3345": "janayati yadi hetur janyam evaṁ sa hetur",
  "SA10n2980:3349": "na janayati phalaṁ cet tadvināhetukaḥ syāt |",
  "SA10n2980:3353": "phalam api sati hetau jāyate yena tasmāt",
  "SA10n2980:3357": "kathaya bhavatu pūrvaṁ kiṁ kuto yad yataḥ",
  "SA10n2980:3358": "syāt || 6.168 (21)",
  "SA10n2980:3371": "janayati yadi hetuḥ prāpya kāryaṁ tadā te",
  "SA10n2980:3375": "na janakaphalabhedaḥ syāt tayor aikyaśakteḥ |",
  "SA10n2980:3379": "pṛthag ayam aviśiṣṭo 'hetubhiḥ syāc ca hetur",
  "SA10n2980:3383": "dvayam idam avadhūyānyāsatī kalpanā ca || 6.169",
  "SA10n2980:3390": "phalam atha tava hetur no karotīty ato 'sat",
  "SA10n2980:3394": "phalam iti phalahīno 'hetuko san na hetuḥ |",
  "SA10n2980:3398": "dvayam idam api māyāsaṁnibhaṁ yena tasmād",
  "SA10n2980:3402": "bhavati na mama doṣo laukikāḥ santi cārthāḥ || 6.170",
  "SA10n2980:3409": "dūṣyaṁ vidūṣayati dūṣaṇam āpya caitad",
  "SA10n2980:3413": "aprāpya ceti nanu caiṣa tavāpi doṣaḥ |",
  "SA10n2980:3417": "svaṁ pakṣam eva vinihaṁsi vadan yadaivaṁ",
  "SA10n2980:3421": "dūṣyaṁ tadāsi na hi dūṣayituṁ samarthaḥ || 6.171",
  "SA10n2980:3428": "jātyantaraiḥ svavacane 'pi samaprasaṅgair",
  "SA10n2980:3432": "nyāyaṁ vinā 'pavadase sakalān padārthān |",
  "SA10n2980:3436": "yasmāt tato na khalu sajjanasaṁmato 'si",
  "SA10n2980:3440": "vaitaṇḍiko 'si ca yato 'sti na te svapakṣaḥ || 6.172",
  "SA10n2980:3447": "aprāpya dūṣayati dūṣaṇam eva yasya",
  "SA10n2980:3451": "prāpyātha dūṣyam iti vā niyamena pakṣaḥ |",
  "SA10n2980:3455": "syāt tasya doṣa udito 'yam ayaṁ tu pakṣo",
  "SA10n2980:3459": "nāstīti naiṣa mama sambhavati prasaṅgaḥ || 6.173",
  "SA10n2980:3466": "dṛṣṭā yathā grahaṇakādiṣu te viśeṣā",
  "SA10n2980:3470": "ādityamaṇḍalagatāḥ pratibimbake 'pi |",
  "SA10n2980:3474": "nāprāpya cāpya ca raviṁ pratibimbajātaṁ",
  "SA10n2980:3478": "yuktaṁ pratītya ca bhaved vyavahāramātram || 6.174",
  "SA10n2980:3485": "yadvad vyalīkam api tat svamukhopaśobhā-",
  "SA10n2980:3489": "saṁpādane bhavati tadvad ihāpy avaihi |",
  "SA10n2980:3493": "hetoḥ svasādhyagatam ity upapattihīnāt",
  "SA10n2980:3497": "prajñāmukhoparacanaṁ prati dṛṣṭaśakteḥ || 6.175",
  "SA10n2980:3504": "prāptyādiyuktyupanayo hi bhaved yadi syād",
  "SA10n2980:3508": "dhetuḥ svasādhyagamakaḥ khalu vastusiddhaḥ | (22)",
  "SA10n2980:3521": "sādhyasvarūpam api vastuta eva gamyam",
  "SA10n2980:3525": "etac ca nāsti tava kevalam eva khedaḥ || 6.176",
  "SA10n2980:3532": "nirvastukā gamayituṁ sakalāḥ padārthāḥ",
  "SA10n2980:3536": "śakyā yathātisukaraṁ na tathā svabhāvaḥ |",
  "SA10n2980:3540": "śaktaḥ sukhena khalu bodhayituṁ pareṣāṁ",
  "SA10n2980:3544": "lokaṁ kim aṅga lapasīha kutarkajālam || 6.177",
  "SA10n2980:3551": "śeṣaṁ ca dūṣaṇam avetya puropadiṣṭaṁ",
  "SA10n2980:3555": "prāptyādipakṣaparihārakṛte 'tra dehi |",
  "SA10n2980:3559": "vaitaṇḍikatvam api nāsti yathā tathoktaṁ",
  "SA10n2980:3563": "prāg eva śeṣam avagaccha diśānayaiva || 6.178",
  "SA10n2980:3570": "nairātmyam etad dvividhaṁ niruktaṁ",
  "SA10n2980:3574": "dharmātmabhedena jagadvimukteḥ |",
  "SA10n2980:3578": "tad eva bhitvā bahuśo 'pi bhūyas",
  "SA10n2980:3582": "tathā vineyebhya uvāca śāstā || 6.179",
  "SA10n2980:3589": "śūnyatāḥ ṣoḍaśākhyāya saprapañcāḥ samāsataḥ |",
  "SA10n2980:3593": "catasraḥ punar ākhyātā mahāyāne ca tā matāḥ || 6.180",
  "SA10n2980:3600": "cakṣur vai cakṣuṣā śūnyam asyaiṣā prakṛtir yataḥ |",
  "SA10n2980:3604": "evaṁ śrotraṁ mano jihvā ghrāṇaṁ kāyaś ca",
  "SA10n2980:3605": "kathyate || 6.181",
  "SA10n2980:3612": "akūṭasthāvināśitvam upādāyāsvabhāvatā |",
  "SA10n2980:3616": "yā ṣaṇṇāṁ cakṣurādīnāṁ sā matā",
  "SA10n2980:3617": "'dhyātmaśūnyatā || 6.182",
  "SA10n2980:3624": "rūpaṁ rūpeṇa vai śūnyam asyaiṣā prakṛtir yataḥ |",
  "SA10n2980:3628": "evaṁ śabdā rasā gandhā dharmāḥ spraṣṭavyam eva",
  "SA10n2980:3629": "ca || 6.183",
  "SA10n2980:3636": "rūpāder niḥsvabhāvatvaṁ bahirdhāśūnyatā matā |",
  "SA10n2980:3640": "ubhayor asvabhāvatvaṁ bahirdhādhyātmaśūnyatā || 6.184 (23)",
  "SA10n2980:3653": "dharmāṇāṁ niḥsvabhāvatvaṁ śūnyatety ucyate",
  "SA10n2980:3654": "budhaiḥ |",
  "SA10n2980:3658": "sā cāpi śūnyatā śūnyā śūnyatārūpato matā || 6.185",
  "SA10n2980:3665": "śūnyatā śūnyatākhyā yā śūnyatāśūnyatā matā |",
  "SA10n2980:3669": "śūnyatā bhāvabuddhīnām uktā grāhanivṛttaye || 6.186",
  "SA10n2980:3676": "sattvabhājanalokasya niḥśeṣavyāpakatvataḥ |",
  "SA10n2980:3680": "apramāṇopamānena paryantābhāvato diśām || 6.187",
  "SA10n2980:3687": "mahattvaṁ digbhir evāsāṁ daśānām api śūnyatā |",
  "SA10n2980:3691": "yā mahāśūnyatā soktā mahāgrāhanivṛttaye || 6.188",
  "SA10n2980:3698": "paramārtho hi nirvāṇaṁ param etat prayojanam |",
  "SA10n2980:3702": "tasya yā śūnyatā tena sā paramārthaśūnyatā || 6.189",
  "SA10n2980:3709": "nirvāṇe bhāvabuddhīnāṁ bhāvagrāhanivṛttaye |",
  "SA10n2980:3713": "deśitā paramārthajñaiḥ śūnyatā pāramārthikā || 6.190",
  "SA10n2980:3720": "dhātutrayaṁ niruktaṁ vai saṁskṛtaṁ",
  "SA10n2980:3721": "pratyayodayāt |",
  "SA10n2980:3725": "tasya yā śūnyatā tena soktā saṁskṛtaśūnyatā || 6.191",
  "SA10n2980:3732": "asaṁskṛtaṁ na yasyaitā utpādasthityanityatāḥ |",
  "SA10n2980:3736": "tena yā śūnyatā tasya soktā 'saṁskṛtaśunyatā || 6.192",
  "SA10n2980:3743": "anto na vidyate yasya tad atyantaṁ nirucyate |",
  "SA10n2980:3747": "tasya tenaiva śūnyatvaṁ kathyate",
  "SA10n2980:3748": "'tyantaśūnyatā || 6.193",
  "SA10n2980:3755": "ādir avaram anto 'graṁ tadabhāvena kathyate |",
  "SA10n2980:3759": "saṁsāro 'navarāgro hi gatyāgativiyogataḥ || 6.194",
  "SA10n2980:3766": "svapnābhasya bhavasyāsya yā tenaiva viyuktatā |",
  "SA10n2980:3770": "śūnyatānavarāgreti saiṣā śāstre nirucyate || 6.195",
  "SA10n2980:3777": "avakāro 'vakiraṇaṁ choraṇaṁ hi nirucyate |",
  "SA10n2980:3781": "na tyāgo 'navakāras tu choraṇaṁ yan na",
  "SA10n2980:3782": "kasyacit || 6.196",
  "SA10n2980:3789": "tenaivānavakāreṇa yā tasyaiva hi śūnyatā |",
  "SA10n2980:3793": "śūnyatānavakārākhyā tasmād eṣā nirucyate || 6.197",
  "SA10n2980:3800": "śikṣaiḥ pratyekabuddhaiś ca bodhisatvais",
  "SA10n2980:3801": "tathāgataiḥ |",
  "SA10n2980:3805": "svabhāvaḥ saṁskṛtādīnāṁ yato naiva kṛtas tataḥ || 6.198",
  "SA10n2980:3813": "svabhāvaḥ saṁskṛtādīnāṁ prakṛtitvena kathyate |",
  "SA10n2980:3817": "tayaiva śūnyatā tasyā yā sā prakṛtiśūnyatā || 6.199 (24)",
  "SA10n2980:3830": "dhātavo 'ṣṭādaśa sparśāḥ ṣaṭ tajjā vedanāś ca ṣaṭ |",
  "SA10n2980:3834": "rūpiṇo 'rūpiṇo dharmāḥ saṁskṛtāsaṁskṛtās tathā | 6.200",
  "SA10n2980:3842": "śūnyatā sarvadharmāṇāṁ yā teṣāṁ tair viyuktatā |",
  "SA10n2980:3846": "rūpaṇāder abhāvo yaḥ sā svalakṣaṇaśūnyatā || 6.201",
  "SA10n2980:3853": "rūpaṇālakṣaṇaṁ rūpaṁ vedanānubhavātmikā |",
  "SA10n2980:3857": "nimittodgrahaṇaṁ saṁjñā saṁskārās tv abhisaṁskṛtiḥ || 6.202",
  "SA10n2980:3865": "viṣayaṁ prati vijñaptir vijñānasya svalakṣaṇam |",
  "SA10n2980:3869": "duḥkhasvalakṣaṇāḥ skandhā dhātvātmāśīviṣaṁ",
  "SA10n2980:3870": "matam || 6.203",
  "SA10n2980:3877": "āyadvāratayoktāni buddhair āyatanāni ca |",
  "SA10n2980:3881": "yaḥ pratītyasamutpādaḥ sa sāmagrīsvalakṣaṇaḥ || 6.204",
  "SA10n2980:3888": "dānapāramitā tyāgaḥ śīlaṁ cādāhalakṣaṇam |",
  "SA10n2980:3892": "akopalakṣaṇā kṣāntiḥ vīryasya tv anavadyatā || 6.205",
  "SA10n2980:3899": "saṁgrahalakṣaṇaṁ dhyānaṁ prajñā cāsaṅgalakṣaṇā |",
  "SA10n2980:3903": "ṣaṇṇāṁ pāramitānāṁ vai lakṣaṇaṁ kathitaṁ tv",
  "SA10n2980:3904": "idam || 6.206",
  "SA10n2980:3911": "dhyānāni cāpramāṇāni ye cārūpyāś tathā pare |",
  "SA10n2980:3915": "akopalakṣaṇā eta uktāḥ samyakprajānatā || 6.207",
  "SA10n2980:3922": "saptatriṁśad bodhipakṣyā nairyāṇikasvalakṣaṇāḥ |",
  "SA10n2980:3926": "śūnyatāyā viviktatvaṁ lakṣaṇaṁ nopalambhanāt || 6.208",
  "SA10n2980:3933": "śāntatā tv animittasya duḥkhāmohas tu lakṣaṇam |",
  "SA10n2980:3937": "tṛtīyasya vimokṣāṇāṁ lakṣaṇaṁ tu vimocanam || 6.209",
  "SA10n2980:3944": "suviniścitarūpāṇi balāni kathitāni ca |",
  "SA10n2980:3948": "supratiṣṭhitarūpāṇi vaiśāradyāni tāyinaḥ || 6.210",
  "SA10n2980:3955": "pratibhānādyanācchedalakṣaṇāḥ pratisaṁvidaḥ |",
  "SA10n2980:3959": "jagaddhitopasaṁhāro mahāmaitrī nirucyate || 6.211",
  "SA10n2980:3966": "mahākṛpā paritrāṇaṁ duḥkhināṁ muditā khalu |",
  "SA10n2980:3970": "prāmodyalakṣaṇopekṣā jñeyāsaṁkīrṇalakṣaṇā || 6.212",
  "SA10n2980:3977": "buddhasyāveṇikā dharmā daśa cāṣṭau ca ye matāḥ |",
  "SA10n2980:3981": "tair ahāryo yataḥ śāstā tato 'hāryasvalakṣaṇāḥ || 6.213 (25)",
  "SA10n2980:3995": "sarvākārajñatājñānaṁ mataṁ pratyakṣalakṣaṇam |",
  "SA10n2980:3999": "anyat prādeśikatvena na pratyakṣam itīṣyate || 6.214",
  "SA10n2980:4006": "yal lakṣaṇaṁ saṁskṛtānāṁ yac cāsaṁskṛtalakṣaṇam |",
  "SA10n2980:4010": "tasya tenaiva śūnyatvaṁ sā svalakṣaṇaśūnyatā || 6.215",
  "SA10n2980:4017": "asthito vartamāno 'yam atītānāgataṁ na sat |",
  "SA10n2980:4021": "yatraite nopalabhyante 'nupalambhaḥ sa ucyate || 6.216",
  "SA10n2980:4029": "yā tasyānupalambhasya tatsvarūpaviyuktatā |",
  "SA10n2980:4033": "sākūṭasthāvināśenānupalambhākhyaśūnyatā || 6.217",
  "SA10n2980:4040": "nāsti sāṁyogikaṁ rūpaṁ bhāvānāṁ pratyayodayāt |",
  "SA10n2980:4044": "saṁyogasya tu tenaiva śūnyatābhāvaśūnyatā || 6.218",
  "SA10n2980:4051": "ucyante bhāvaśabdenapañcaskandhāḥ samāsataḥ |",
  "SA10n2980:4055": "tair eva śūnyatā teṣāṁ yā soktā bhāvaśūnyatā || 6.219",
  "SA10n2980:4062": "abhāvo 'saṁskṛtā dharmā nirdiśyante samāsataḥ |",
  "SA10n2980:4066": "tenābhāvena śūnyatvaṁ tasyaivābhāvaśūnyatā || 6.220",
  "SA10n2980:4073": "prakṛter niḥsvabhāvatvaṁ svabhāvākhyā tu",
  "SA10n2980:4074": "śūnyatā |",
  "SA10n2980:4078": "prakṛtir na kṛtety evaṁ svabhāva iti kathyate 6.221",
  "SA10n2980:4085": "utpāde 'pi hi buddhānām anutpāde 'pi bhāvataḥ |",
  "SA10n2980:4089": "śūnyatā sarvabhāvānāṁ paro bhāvaḥ prakīrtitaḥ || 6.222",
  "SA10n2980:4097": "bhūtakoṭis tathātvaṁ ca sā parabhāvaśūnyatā |",
  "SA10n2980:4101": "prajñāpāramitānītāv ity etāḥ saṁprakīrtitāḥ || 6.223",
  "SA10n2980:4108": "iti matikiraṇasphuṭāvabhāsaḥ",
  "SA10n2980:4112": "svakaragatāmalakaṁ yathaiva buddhvā |",
  "SA10n2980:4116": "tribhavam idam aśeṣam ādyajātaṁ",
  "SA10n2980:4120": "vyavahṛtisatyavaśān nirodham eti || 6.224",
  "SA10n2980:4127": "janayati karuṇāṁ jagaty anāthe",
  "SA10n2980:4131": "bhavati nirodhagatāśayaḥ sadaiṣaḥ |",
  "SA10n2980:4135": "jayati ca sakalān dhiyāta ūrdhvaṁ",
  "SA10n2980:4139": "sugatavacaḥ prabhavāt sa madhyabuddhān || 6.225 (26)",
  "SA10n2980:4152": "jinaguṇajaladheḥ paraṁ sa pāraṁ",
  "SA10n2980:4156": "vrajati puraskṛta eṣa janmihaṁsaiḥ |",
  "SA10n2980:4160": "śubhapavanabalena rājahaṁsaḥ",
  "SA10n2980:4164": "pṛthusitasaṁvṛtitattvajātapakṣaḥ || 6.226",
  "SA10n2980:4173": "(27)"
}