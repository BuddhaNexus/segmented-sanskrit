{
    "595:0": "4",
    "595:1": "50. śakro jinena paripṛcchitu praśnamāhu",
    "595:2": "saci gaṅgavālikasamā siya buddhakṣetrāḥ|",
    "595:3": "jinadhātu sarvi paripūrita cūḍibaddhā",
    "595:4": "imameva prajñavarapāramitāhu gṛhṇe||1||",
    "595:5": "51. kiṃ kāraṇaṃ na mi śarīri agauravatvaṃ",
    "595:6": "api tū khu prajñaparibhāvita pūjayanti|",
    "595:7": "yatha rājaniśrita naro labhi sarvi pūjāṃ",
    "595:8": "tatha prajñapāramitaniśrita buddhadhātuḥ||2||",
    "595:9": "52. maṇiratna sarvi guṇayukta anarghaprāpto",
    "595:10": "yasmiṃ karaṇḍaki bhave sa namasyanīyaḥ|",
    "595:11": "tasyāpi uddhṛta spṛhanti karaṇḍakasmiṃ",
    "595:12": "tasyaiva te guṇa mahāratanasya bhonti||3||",
    "595:13": "53. emeva prajñavarapāramitāguṇāni",
    "595:14": "yannirvṛte'pi jinadhātu labhanti pūjām|",
    "595:15": "tasmā hu tān jinaguṇā(n)",
    "595:16": "parighettukāmo",
    "595:17": "so prajñapāramita gṛhṇatu eṣa mokṣo||4||",
    "595:18": "54. pūrvaṃgamā bhavatu dānu dadantu prajñā",
    "595:19": "śīle ca kṣānti tatha vīrya tathaiva dhyāne|",
    "595:20": "parigrāhikā kuśaladharmaavipraṇāśe",
    "595:21": "ekā ca sā api nidarśayi sarvadharmān|| 5||",
    "595:22": "55. yatha jambudvīpi bahuvṛkṣasahasrakoṭī",
    "595:23": "nānāprakāra vividhāśca anekarūpāḥ|",
    "595:24": "na vi chāyanānatu bhaveta viśeṣatāpi",
    "595:25": "anyatra chāyagatasaṃkhya prabhāṣamāṇā||6||",
    "595:26": "56. emeva pañca imi pāramitā jinānāṃ",
    "595:27": "prajñāya pāramita nāmatayā bhavanti|",
    "595:28": "sarvajñatāya pariṇāmayamāṇa sarve",
    "595:29": "ṣaḍapīha ekanayamarchati bodhināmā||7||",
    "595:30": "bhagavatyāṃ ratnaguṇasaṃcayagāthāyāṃ guṇaparikīrtanaparivarto nāma caturthaḥ||"
}