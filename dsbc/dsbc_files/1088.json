{
    "1088:0": "śāntidevaviracitaḥ bodhicaryāvatāraḥ|",
    "1088:1": "||om namo buddhāya||",
    "1088:2": "1 bodhicittānuśaṃso nāma prathamaḥ paricchedaḥ|",
    "1088:3": "sugatān sasutān sadharmakāyān",
    "1088:4": "praṇipatyādarato'khilāṃśca vandyān|",
    "1088:5": "sugatātmajasaṃvarāvatāraṃ",
    "1088:6": "kathayiṣyāmi yathāgamaṃ samāsāt||1||",
    "1088:7": "na hi kiṃcidapūrvamatra vācyaṃ",
    "1088:8": "na ca saṃgrathanakauśalaṃ mamāsti|",
    "1088:9": "ata eva na me parārthacintā",
    "1088:10": "svamano vāsayituṃ kṛtaṃ mayedam||2||",
    "1088:11": "mama tāvadanena yāti vṛddhiṃ",
    "1088:12": "kuśalaṃ bhāvayituṃ prasādavegaḥ|",
    "1088:13": "atha matsamadhātureva paśye-",
    "1088:14": "daparo'pyenamato'pi sārthako'yam||3||",
    "1088:15": "kṣaṇasaṃpadiyaṃ sudurlabhā",
    "1088:16": "pratilabdhā puruṣārthasādhanī|",
    "1088:17": "yadi nātra vicintyate hitaṃ",
    "1088:18": "punarapyeṣa samāgamaḥ kutaḥ||4||",
    "1088:19": "rātrau yathā meghaghanāndhakāre",
    "1088:20": "vidyut kṣaṇaṃ darśayati prakāśam|",
    "1088:21": "buddhānubhāvena tathā kadāci-",
    "1088:22": "llokasya puṇyeṣu matiḥ kṣaṇaṃ syāt||5||",
    "1088:23": "tasmācchubhaṃ durbalameva nityaṃ",
    "1088:24": "balaṃ tu pāpasya mahatsughoram|",
    "1088:25": "tajjīyate'nyena śubhena kena",
    "1088:26": "saṃbodhicittaṃ yadi nāma na syāt||6||",
    "1088:27": "kalpānanalpān pravicintayadbhi-",
    "1088:28": "rdṛṣṭaṃ munīndrairhitametadeva|",
    "1088:29": "yataḥ sukhenaiva sukhaṃ pravṛddha-",
    "1088:30": "mutplāvayatyapramitāñjanaughān||7||",
    "1088:31": "bhavaduḥkhaśatāni tartukāmai-",
    "1088:32": "rapi sattvavyasanāni hartukāmaiḥ|",
    "1088:33": "bahusaukhyaśatāni bhoktukāmai-",
    "1088:34": "rna vimocyaṃ hi sadaiva bodhicittam||8||",
    "1088:35": "bhavacārakabandhano varākaḥ",
    "1088:36": "sugatānāṃ suta ucyate kṣaṇena|",
    "1088:37": "sanarāmaralokavandanīyo",
    "1088:38": "bhavati smodita eva bodhicitte||9||",
    "1088:39": "aśucipratimāmimāṃ gṛhītvā",
    "1088:40": "jinaratnapratimāṃ karotyanarghām|",
    "1088:41": "rasajātamatīva vedhanīyaṃ",
    "1088:42": "sudṛḍhaṃ gṛhṇata bodhicittasaṃjñam||10||",
    "1088:43": "suparīkṣitamaprameyadhībhi-",
    "1088:44": "rbahumūlyaṃ jagadekasārthavāhaiḥ|",
    "1088:45": "gatipattanavipravāsaśīlāḥ",
    "1088:46": "sudṛḍhaṃ gṛhṇata bodhicittaratnam||11||",
    "1088:47": "kadalīva phalaṃ vihāya yāti",
    "1088:48": "kṣayamanyat kuśalaṃ hi sarvameva|",
    "1088:49": "satataṃ phalati kṣayaṃ na yāti",
    "1088:50": "prasavatyeva tu bodhicittavṛkṣaḥ||12||",
    "1088:51": "kṛtvāpi pāpāni sudāruṇāni",
    "1088:52": "yadāśrayāduttarati kṣaṇena|",
    "1088:53": "śūrāśrayeṇeva mahābhayāni",
    "1088:54": "nāśrīyate tatkathamajñasattvaiḥ||13||",
    "1088:55": "yugāntakālānalavanmahānti",
    "1088:56": "pāpāni yannirdahati kṣaṇena|",
    "1088:57": "yasyānuśaṃsānamitānuvāca",
    "1088:58": "maitreyanāthaḥ sudhanāya dhīmān||14||",
    "1088:59": "tadbodhicittaṃ dvividhaṃ vijñātavyaṃ samāsataḥ|",
    "1088:60": "bodhipraṇidhicittaṃ ca bodhiprasthānameva ca||15||",
    "1088:61": "gantukāmasya gantuśca yathā bhedaḥ pratīyate|",
    "1088:62": "tathā bhedo'nayorjñeyo yāthāsaṃkhyena paṇḍitaiḥ||16||",
    "1088:63": "bodhipraṇidhicittasya saṃsāre'pi phalaṃ mahat|",
    "1088:64": "na tvavicchinnapuṇyatvaṃ yathā prasthānacetasaḥ||17||",
    "1088:65": "yataḥ prabhṛtyaparyantasattvadhātupramokṣaṇe|",
    "1088:66": "samādadāti taccittamanivartyena cetasā||18||",
    "1088:67": "tataḥprabhṛti suptasya pramattasyāpyanekaśaḥ|",
    "1088:68": "avicchinnāḥ puṇyadhārāḥ pravartante nabhaḥsamāḥ||19||",
    "1088:69": "idaṃ subāhupṛcchāyāṃ sopapattikamuktavān|",
    "1088:70": "hīnādhimuktisattvārthaṃ svayameva tathāgataḥ||20||",
    "1088:71": "śiraḥśūlāni sattvānāṃ nāśayāmīti cintayan|",
    "1088:72": "aprameyeṇa puṇyena gṛhyate sma hitāśayaḥ||21||",
    "1088:73": "kimutāpratimaṃ śūlamekaikasya jihīrṣataḥ|",
    "1088:74": "aprameyaguṇaṃ sattvamekaikaṃ ca cikīrṣataḥ||22||",
    "1088:75": "kasya mātuḥ piturvāpi hitāśaṃseyamīdṛśī|",
    "1088:76": "devatānāmṛṣīṇāṃ vā brahmaṇāṃ vā bhaviṣyati||23||",
    "1088:77": "teṣāmeva ca sattvānāṃ svārthe'pyeṣa manorathaḥ|",
    "1088:78": "notpannapūrvaḥ svapne'pi parārthe saṃbhavaḥ kutaḥ||24||",
    "1088:79": "sattvaratnaviśeṣo'yamapūrvo jāyate katham|",
    "1088:80": "yatparārthāśayo'nyeṣāṃ na svārthe'pyupajāyate||25||",
    "1088:81": "jagadānandabījasya jagadduḥkhauṣadhasya ca|",
    "1088:82": "cittaratnasya yatpuṇyaṃ tatkathaṃ hi pramīyatām||26||",
    "1088:83": "hitāśaṃsanamātreṇa buddhapūjā viśiṣyate|",
    "1088:84": "kiṃ punaḥ sarvasattvānāṃ sarvasaukhyārthamudyamāt||27||",
    "1088:85": "duḥkhamevābhidhāvanti duḥkhaniḥsaraṇāśayā|",
    "1088:86": "sukhecchayaiva saṃmohāt svasukhaṃ ghnanti śatruvat||28||",
    "1088:87": "yasteṣāṃ sukharaṅkāṇāṃ pīḍitānāmanekaśaḥ|",
    "1088:88": "tṛptiṃ sarvasukhaiḥ kuryātsarvāḥ pīḍāśchinatti ca||29||",
    "1088:89": "nāśayatyapi saṃmohaṃ sādhustena samaḥ kutaḥ|",
    "1088:90": "kuto vā tādṛśaṃ mitraṃ puṇyaṃ vā tādṛśaṃ kutaḥ||30||",
    "1088:91": "kṛte yaḥ pratikurvīta so'pi tāvatpraśasyate|",
    "1088:92": "avyāpāritasādhustu bodhisattvaḥ kimucyatām||31||",
    "1088:93": "katipayajanasattradāyakaḥ",
    "1088:94": "kuśalakṛdityabhipūjyate janaiḥ|",
    "1088:95": "kṣaṇamaśanakamātradānataḥ",
    "1088:96": "saparibhavaṃ divasārdhayāpanāt||32||",
    "1088:97": "kimu niravadhisattvasaṃkhyayā",
    "1088:98": "niravadhikālamanuprayacchataḥ|",
    "1088:99": "gaganajanaparikṣayākṣayaṃ",
    "1088:100": "sakalamanorathasaṃprapūraṇam||33||",
    "1088:101": "iti sattrapatau jinasya putre",
    "1088:102": "kaluṣaṃ sve hṛdaye karoti yaśca|",
    "1088:103": "kaluṣodayasaṃkhyayā sa kalpān",
    "1088:104": "narakeṣvāvasatīti nātha āha||34||",
    "1088:105": "atha yasya manaḥ prasādameti",
    "1088:106": "prasavettasya tato'dhikaṃ phalam|",
    "1088:107": "mahatā hi balena pāpakaṃ",
    "1088:108": "jinaputreṣu śubhaṃ tvayatnataḥ||35||",
    "1088:109": "teṣāṃ śarīrāṇi namaskaromi",
    "1088:110": "yatroditaṃ tadvaracittaratnam|",
    "1088:111": "yatrāpakāro'pi sukhānubandhī",
    "1088:112": "sukhākarāṃstān śaraṇaṃ prayāmi||36||",
    "1088:113": "iti prajñākaramativiracitāyāṃ bodhicaryāvatārapañjikāyāṃ",
    "1088:114": "bodhicittānuśaṃsāvivaraṇaṃ nāma prathamaḥ paricchedaḥ||"
}