{
    "772:0": "bhadantaghoṣakapraṇītam",
    "772:1": "abhidharmāmṛtaśāstram",
    "772:2": "prathamo binduḥ",
    "772:3": "dānaṃ śīlaṃ ca",
    "772:4": "1 | katamad dānaṃ |",
    "772:5": "svasvāmikānāṃ dhanavastūnāṃ vitaraṇaṃ dānaṃ |",
    "772:6": "tat trividhaheto rbhavati |",
    "772:7": "ātmahetoḥ parahetoḥ parātmahetośca |",
    "772:8": "caityamaṃdirāṇāṃ buddhapratyekabuddhārhatāṃ copasthānamātmahetoḥ |",
    "772:9": "sattvebhyo dānaṃ parahetoḥ |",
    "772:10": "janebhyo dānaṃ parātmahetoḥ ||",
    "772:11": "2 | cittakṣetravastukuśalaiḥ kuśalaphalaprāptiḥ |",
    "772:12": "katamaccittakuśalaṃ |",
    "772:13": "pariśuddhā śraddhā pūjā ca ||",
    "772:14": "katamat kṣetrakuśalaṃ |",
    "772:15": "mahāpuṇyāḥ duḥkhitāḥ mahāpuṇyāśca duḥkhitāśca |",
    "772:16": "ke mahāpuṇyāḥ |",
    "772:17": "buddhā bodhisattvāḥ pratyekabuddhā arhanto&#39;",
    "772:18": "nāgāminaḥ sakṛdāgāminaḥ srota āpannāśca |",
    "772:19": "ke duḥkhitāḥ |",
    "772:20": "tiryaṃco vṛddhā rogiṇo badhirā andhā mūkāstathāvidhā anye ca duḥkhitāḥ |",
    "772:21": "ke mahāpuṇyāśca duḥkhitāśca |",
    "772:22": "buddhā bodhisattvāḥ pratyekabuddhā arhanto&#39;",
    "772:23": "nāgāminaḥ sakṛdāgāminaḥ srota āpannāśca (yadā)",
    "772:24": "vṛddhā rogiṇo badhirā andhā mūkā duḥkhitāḥ |",
    "772:25": "mahāpuṇyakṣetre gauravacittena mahāphalaprāptiḥ |",
    "772:26": "duḥkhitakṣetre karuṇācittena mahāphalaprāptiḥ |",
    "772:27": "mahāpuṇye duḥkhite ca kṣetre gauravakaruṇācittena mahāphalaprāptiḥ |",
    "772:28": "iti kuśalaṃ puṇyakṣetraṃ |",
    "772:29": "katamad vastukuśalaṃ |",
    "772:30": "aprāṇātipātenādattādānena balāpahāraviratyā&#39;",
    "772:31": "bandhanenātāḍanenāvaṃcanenāsaṃbhinnapralāpena (arjitatayā)",
    "772:32": "pariśuddhaṃ yathākālaṃ (yatkiṃcid)",
    "772:33": "alpaṃ bahu dīyamānaṃ vastukuśalaṃ ||",
    "772:34": "3| śraddhā katamā |",
    "772:35": "āmuṣmike phale yathā nirvāṇe jñānamacalaikacittamucyate pariśuddhā śraddhā ||",
    "772:36": "katamā pūjā |",
    "772:37": "mātsaryeṇābhidhyayā ca viviktātmano janamānanamucyate pariśuddhā pūjā |",
    "772:38": "yadidamupasthānaṃ vaṃdanaṃ svahastena dānamityeva mādya cyate pūjā ||",
    "772:39": "katamaḥ kṣetravibhaṃgaḥ |",
    "772:40": "kuśalacaryāśīlagrahaṇadhyānaprajñāvimokṣeṣu satsu bhavati puṇyānāṃ phalānāṃ prāptiriti kṣetravibhaṃgaḥ ||",
    "772:41": "4 | bhayatrāṇaṃ (hi dānaṃ)|",
    "772:42": "hetupratyayavibhāgādduḥkhaprāptiḥ |",
    "772:43": "(dāna)prasthitacittasya pūjayā dānena satphalaprāptiḥ |",
    "772:44": "buddhāya dānena dānasamakālameva sarvapuṇyaprāptiḥ |",
    "772:45": "saṃghāya dānena (saṃghena)",
    "772:46": "anumatenopabhuktenākhilapuṇyaprāptiḥ |",
    "772:47": "nānumatena nopabhukta na nākhilapuṇyaprāptiḥ |",
    "772:48": "dharmāya pūjayā mahāphalaprāptiḥ |",
    "772:49": "śaikṣāṇāṃ caturāṇāṃ prajñāvatāṃ pūjā dharmāyocyate pūjā |",
    "772:50": "dharmadānena samṛddhilābhaḥ |",
    "772:51": "(sva)parigṛhīta vastu dānena sukhabalāyuṣyādiśubhaprāptiḥ |",
    "772:52": "kleśānāṃ kṣayeṇa vijayena mahāphalaprāptiḥ |",
    "772:53": "tiryagbhyo dānasya śatajanmāni yāvatphalaprāptiḥ |",
    "772:54": "pāpebhyo dānasya sahasrajanmāni yāvatphalaprāptiḥ |",
    "772:55": "puṇyebhyo dānasya śatasahasrajanmāni yāvatphalaprāptiḥ |",
    "772:56": "vītarāgapudgalebhyo dānasya koṭiśatasahasrajanmāni yāvatphalaprāptiḥ |",
    "772:57": "buddhebhyo dānasya yāvannirvāṇaṃ phalaprāptiḥ ||",
    "772:58": "5 | ṣaḍ dānāntarāyāḥ |",
    "772:59": "prathamo mānena dānaṃ |",
    "772:60": "dvitīyo yaśase dānaṃ |",
    "772:61": "tṛtīyo balāya dānaṃ |",
    "772:62": "caturtho&#39;nicchayā dānaṃ |",
    "772:63": "paṃcamo nimittena dānaṃ |",
    "772:64": "ṣaṣṭhaḥ phalāya dānaṃ saṃghānnirdhārya dānaṃ ||",
    "772:65": "6 | katamacchīlaṃ |",
    "772:66": "dvividhaḥ saṃvaraḥ |",
    "772:67": "kuśalasaṃvaro&#39;",
    "772:68": "kuśalasaṃvaraśca |",
    "772:69": "katamo&#39;kuśalasaṃvaraḥ |",
    "772:70": "prāṇātipātaḥ adattādānaṃ kāmamithyācāraśceti trīṇi kāyaduścaritāni nāma |",
    "772:71": "paiśunyaṃ pāruṣyaṃ mṛṣāvādaḥ saṃbhinnapralāpaśceti catvāri vāgduścaritāni nāma |",
    "772:72": "abhidhyā vyāpādaḥ mithyādṛṣṭiśceti trīṇi manoduścaritāni nāma ||",
    "772:73": "7 | (katamaḥ prāṇātipātaḥ |",
    "772:74": ")asti jīvo jñāyate yadayaṃ jīvastasya prāṇāpahāro nāma prāṇātipātaḥ |",
    "772:75": "(katamadadattādānaṃ |",
    "772:76": ")asti parāyattaṃ vastu jñāyate yadidaṃ parāyattaṃ vastu tasya steyaṃ nāmādattādānaṃ |",
    "772:77": "(katamaḥ kāmamithyācāraḥ |",
    "772:78": ")asti paradārā jñāyate yadiyaṃ paradārāstāṃ rāgānmārgeṇāmārgeṇa vā samāpadyate&#39;",
    "772:79": "styātmano dārāstāmamārgeṇa maithunāya sevate tadetādṛśaḥ kāmamithyācāro nāma ||",
    "772:80": "8 | (katamo mṛṣāvādaḥ |",
    "772:81": ")yadi jñātaṃ na jñātamiti vadati |",
    "772:82": "ajñātaṃ jñātamiti vadati |",
    "772:83": "saṃdigdhamasaṃdigdhamiti vadati |",
    "772:84": "asaṃdigdhaṃ saṃdigdhamiti vadati |",
    "772:85": "tadetādṛśo mṛṣāvādo nāma |",
    "772:86": "(katamatpaiśunyaṃ |",
    "772:87": ")yadi satyabhūtaṃ yathākāmaṃ bhaṃktvā prayojanavaśādvadati tadetādṛśaṃ paiśunyaṃ nāma |",
    "772:88": "(katamatpāruṣyaṃ |",
    "772:89": ")kliṣṭena cittena pareṣāmahṛdyaṃ vadati tadetādṛśaṃ pāruṣyaṃ nāma |",
    "772:90": "(katamaḥ saṃbhinnapralāpaḥ |",
    "772:91": ")kālavivekaṃ vinā vadatyapārthaṃ tadetādṛśaḥ saṃbhinnapralāpo nāma ||",
    "772:92": "9 | (katamābhidhyā |",
    "772:93": ")pareṣāṃ dhanavastujātaṃ madīyaṃ bhavatvityabhidhyāyati tadetādṛśyabhidhyā nāma |",
    "772:94": "(katamo vyāpādaḥ |",
    "772:95": ")aparān dṛṣṭvā na prasīdati duḥkhābādhāṃ prayoktukāmo bhavati tadetādṛśo vyāpādo nāma |",
    "772:96": "(katamā mithyādṛṣṭiḥ |",
    "772:97": ")mithyādṛṣṭirdvividhā |",
    "772:98": "sadvastunyasaduktirviparītaṃ darśanaśrutaṃ ca |",
    "772:99": "katamā sadavastunyasaduktiḥ |",
    "772:100": "nāstiṃ pāpaṃ nāsti puṇyavipākaḥ |",
    "772:101": "nāstyayaṃ loko nāsti paralokaḥ |",
    "772:102": "na sto mātāpitarau |",
    "772:103": "na santi buddhāḥ pratyekabuddhā arhanto&#39;",
    "772:104": "nye ca mārgapratipannāḥ |",
    "772:105": "tadetādṛśī nāma sadvastunyasaduktiḥ |",
    "772:106": "katamadviparītaṃ darśanaśrutaṃ |",
    "772:107": "vidhikṛte kuśalākuśale |",
    "772:108": "na karmāṇyupādāya phalavipākaḥ |",
    "772:109": "ityetādṛśaṃ viparītaṃ darśanaśrutaṃ |",
    "772:110": "ityevameṣā mithyādṛṣṭiḥ |",
    "772:111": "iti trividhānyakuśalakarmāṇi ||",
    "772:112": "10 | anuśocatastrividhānāṃ duścaritānāmucchedo&#39;",
    "772:113": "nācaraṇaṃ nāma trividhāni kuśalakarmāṇi |",
    "772:114": "trividhaduścaritaprahāṇaṃ trividhakuśala(karma)",
    "772:115": "caraṇaṃ nāma dhruvaśīlasamādānaṃ |",
    "772:116": "dānena śīlena dhyānabhāvanayā ca labhyānyeva trīṇi phalāni dhanaṃ devalokopapattirmokṣaśca ||",
    "772:117": "11 | asmin loke triṃśadvidhaṃ puṇyakṣetraṃ |",
    "772:118": "mātā pitā vṛddho rogo satpuruṣo vītarāgapudgalaḥ sāsravāḥ sapta pudgalāścatvāro mārgapratipannāścatvāraḥ phalapratipannāḥ pratyekabuddhā buddhā bodhisattvā bhikṣusaṃgho&#39;",
    "772:119": "dhvagāḥ kṣuttṛṭśramāturāśca ||",
    "772:120": "[ityabhidharmāmṛtaśāstre dānaśīlanirdeśo nāma prathamo binduḥ ||]"
}