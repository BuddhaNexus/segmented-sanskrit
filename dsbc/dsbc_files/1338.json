{
    "1338:0": "pratipakṣabhāvanā'vasthāphalaparicchedaścaturthaḥ",
    "1338:1": "dauṣṭhulyāt tarṣahetutvād vastutvādavimohataḥ|",
    "1338:2": "catussatyāvatārāya smṛtyupasthānabhāvanā||1||",
    "1338:3": "parijñāte vipakṣe ca pratipakṣe ca sarvathā|",
    "1338:4": "tadapāyāya vīryaṃ hi caturdhā sampravartate||2||",
    "1338:5": "karmaṇyatā sthitestatra sarvārthānāṃ samṛddhaye|",
    "1338:6": "pañcadoṣaprahāṇā'ṣṭasaṃskārāsevanā'nvayā||3||",
    "1338:7": "kausīdyamavavādasya sammoṣo laya uddhavaḥ|",
    "1338:8": "asaṃskāro'tha saṃskāraḥ pañca doṣā ime matāḥ||4||",
    "1338:9": "āśrayo'thāśritastasya nimittaṃ phalameva ca|",
    "1338:10": "ālambane'sammoṣo layauddhatyānubuddhyanā||5||",
    "1338:11": "tadapāyā'bhisaṃskāraḥ śāntau praśaṭhavāhitā|",
    "1338:12": "ropite mokṣabhāgīye cchandayogādhipatyataḥ||6||",
    "1338:13": "ālambane'sammoṣāvisāravicayasya ca|",
    "1338:14": "vipakṣasya hi saṃlekhāt pūrvasya phalamuttaram||7||",
    "1338:15": "dvau dvau nirvedhabhāgīyāvindriyāṇi balāni ca|",
    "1338:16": "āśrayāṅgaṃ svabhāvāṅgaṃ niryāṇāṅgaṃ tṛtīyakam||8||",
    "1338:17": "caturthamanuśaṃsāṅgaṃ niḥkleśāṅgaṃ tridhā matam|",
    "1338:18": "nidānenāśrayeṇeha svabhāvena ca deśitam||9||",
    "1338:19": "paricchedo'tha samprāptiḥ parasambhāvanā tridhā|",
    "1338:20": "vipakṣapratipakṣaśca mārgasyāṅgaṃ tadaṣṭadhā||10||",
    "1338:21": "dṛṣṭau śīle'tha saṃlekhe paravijñaptiriṣyate|",
    "1338:22": "kleśopakleśavaibhutvavipakṣapratipakṣatā||11||",
    "1338:23": "anukūlā viparyastā sānubandhā viparyayā|",
    "1338:24": "aviparyastaviparyāsā'nanubandha ca bhāvanā||12||",
    "1338:25": "ālambanamanaskāraprāptitastad viśiṣṭatā|",
    "1338:26": "hetvavasthā'vatārākhyā prayogaphalasaṃjñitā||13||",
    "1338:27": "kāryākāryaviśiṣṭā ca uttarā'nuttarā ca sā|",
    "1338:28": "adhimuktau praveśe ca niryāṇe vyākṛtāvapi||14||",
    "1338:29": "kathikatve'bhiṣeke ca samprāptāvanuśaṃsane|",
    "1338:30": "kṛtyānuṣṭhāna uddiṣṭā dharmādhātau tridhā punaḥ||15||",
    "1338:31": "aśuddhāśuddhaśuddhā ca viśuddhā ca yathārthataḥ|",
    "1338:32": "pudgalānāṃ vyavasthānaṃ yathāyogamato matam||16||",
    "1338:33": "bhājanatvaṃ vipākākhyaṃ balantasyādhipatyataḥ|",
    "1338:34": "rucirvṛddhirviśuddhiśca phalametad yathākramam||17||",
    "1338:35": "uttarottaramādyañca tadabhyāsat samāptitaḥ|",
    "1338:36": "ānukūlyād vipakṣācca visaṃyogād viśeṣataḥ||18||",
    "1338:37": "uttarā'nuttaratvācca phalamanyat samāsataḥ|",
    "1338:38": "||iti pratipakṣabhāvanādiparicchedaścaturthaḥ||"
}