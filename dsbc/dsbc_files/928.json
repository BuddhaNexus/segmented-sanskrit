{
    "928:0": "CANTO XIV",
    "928:1": "tato mārabalaṃ jitvā",
    "928:2": "dhairyeṇa ca śamena ca|",
    "928:3": "paramārtha vijijñāsuḥ",
    "928:4": "sa dadhyau dhyānakovidaḥ||1||",
    "928:5": "sarveṣu dhyānavidhiṣu",
    "928:6": "prāpya caiśvaryamuttamam|",
    "928:7": "sasmāra prathame yāme",
    "928:8": "pūrvajanmaparaṃparām||2||",
    "928:9": "amutrāhamayaṃ nāma",
    "928:10": "cyutastasmādihāgataḥ|",
    "928:11": "uiti janmasahastrāṇi",
    "928:12": "sasmārānubhavanniva||3||",
    "928:13": "smṛtvā janma ca mṛtyuṃ ca",
    "928:14": "tāsu tāsūpapattiṣu|",
    "928:15": "tataḥ sattveṣu kāruṃṇyaṃ",
    "928:16": "cakāra karuṇātmakaḥ||4||",
    "928:17": "kṛtveha svajanotsarga",
    "928:18": "punaranyatra ca kriyāḥ|",
    "928:19": "atrāṇaḥ khalu loko'yaṃ",
    "928:20": "paribhramati cakravat||5||",
    "928:21": "ityevaṃ smaratastasya",
    "928:22": "babhūva niyatātmanaḥ|",
    "928:23": "kadalīgarbhaniḥsāraḥ|",
    "928:24": "saṃsāra iti niścayaḥ||6||",
    "928:25": "dvitīye tvāgate yāme",
    "928:26": "so'dvitīyaparākramaḥ|",
    "928:27": "divyaṃ lebhe paraṃ cakṣuḥ",
    "928:28": "sarvacakṣuṣmatāṃ varaḥ||7||",
    "928:29": "tatastena sa divyena",
    "928:30": "pariśuddhena cakṣuṣā|",
    "928:31": "dadarśa nikhilaṃ loka-",
    "928:32": "mādarśa iva nirmale||8||",
    "928:33": "sattvānāṃ paśyatastasya",
    "928:34": "nikṛṣṭotkṛṣṭakarmaṇām|",
    "928:35": "pracyutiṃ copapattiṃ ca",
    "928:36": "vavṛdhe karuṇātmatā||9||",
    "928:37": "ime duṣkṛtakarmāṇaḥ",
    "928:38": "prāṇino yāni durgatim|",
    "928:39": "ime'nye śubhakarmāṇaḥ",
    "928:40": "pratiṣṭhante tripiṣṭape||10||",
    "928:41": "upapannāḥ pratibhaye",
    "928:42": "narake bhṛśadāruṇe|",
    "928:43": "amī duḥkhairbahuvidhaiḥ",
    "928:44": "pīḍyante kṛpaṇaṃ bata||11||",
    "928:45": "pāyyante kvathitaṃ keci-",
    "928:46": "dagnivarṇamayorasam|",
    "928:47": "āropyante ruvānto'nye",
    "928:48": "niṣṭaptastambhamāyasam||12||",
    "928:49": "pacyante piṣṭavatkeci-",
    "928:50": "dayaskumbhīṣvavāṅmukhāḥ|",
    "928:51": "dahyante karuṇaṃ keci-",
    "928:52": "ddīpteṣvaṅgārarāśiṣu||13||",
    "928:53": "kecittīkṣṇairayodaṃṣṭrai-",
    "928:54": "rbhakṣyante dāruṇaiḥ śvabhiḥ|",
    "928:55": "keciddhṛṣṭairayastuṇḍai-",
    "928:56": "rvāyasairāyasairiva||14||",
    "928:57": "keciddāhapariśrāntāḥ",
    "928:58": "śītacchāyābhikāṅikṣaṇaḥ|",
    "928:59": "asipattravanaṃ nīlaṃ",
    "928:60": "baddhā iva viśantyamī||15||",
    "928:61": "pāṭyante dāruvatkeci-",
    "928:62": "tkuṭhārairbaddhabāhavaḥ|",
    "928:63": "duḥkhe'pi na vipacyante",
    "928:64": "karmabhirdhāritāsavaḥ||16||",
    "928:65": "sukhaṃ syāditi yatkarma",
    "928:66": "kṛtaṃ duḥkhanivṛttaye|",
    "928:67": "phalaṃ tasyedamavaśai-",
    "928:68": "rduḥkhamevopabhujyate||17||",
    "928:69": "sukhārthamaśubhaṃ kṛtvā",
    "928:70": "ya ete bhṛśaduḥkhitāḥ|",
    "928:71": "āsvādaḥ sa kimeteṣāṃ",
    "928:72": "karoti sukhamaṇvapi||18||",
    "928:73": "hasadbhiryatkṛtaṃ karma",
    "928:74": "kaluṣaṃ kaluṣātmabhiḥ|",
    "928:75": "etatpariṇate kāle",
    "928:76": "krośadbhiranubhūyate||19||",
    "928:77": "yadyevaṃ pāpakarmāṇaḥ",
    "928:78": "paśyeyuḥ karmaṇāṃ phalam|",
    "928:79": "vameyuruṣṇaṃ rudhiraṃ",
    "928:80": "marmasvabhihatā iva||20||",
    "928:81": "ime'nye karmabhiścitrai-",
    "928:82": "ścittavispandasaṃbhavaiḥ|",
    "928:83": "tiryagyonau vicitrāyāḥ-",
    "928:84": "mupapannāstapasvinaḥ||21||",
    "928:85": "māṃsatvagbāladantārtha",
    "928:86": "vairādapi madādapi|",
    "928:87": "hanyante kṛpaṇaṃ yatra",
    "928:88": "bandhūnāṃ paśyatāmapi||22||",
    "928:89": "aśaknuvanto'pyavaśāḥ",
    "928:90": "kṣuttarṣaśramapīḍitāḥ|",
    "928:91": "go'śvabhūtāśca vāhyante",
    "928:92": "pratodakṣatamūrtayaḥ ||23||",
    "928:93": "vāhyante gajabhūtāśca",
    "928:94": "valīyāṃso'pi durbalaiḥ|",
    "928:95": "aṅkaśakliṣṭamūrdhāna-",
    "928:96": "stāḍitāḥ pādapāṣṇibhiḥ||24||",
    "928:97": "satsvapyanyeṣu duḥkheṣu",
    "928:98": "duḥkhaṃ yatra viśeṣataḥ|",
    "928:99": "parasparavirodhācca",
    "928:100": "parādhīnatayaiva ca||25||",
    "928:101": "khasthāḥ khasthairhi bādhyante",
    "928:102": "jalasthā jalacāribhiḥ|",
    "928:103": "sthalasthāḥ sthalasaṃsthaiśca",
    "928:104": "prāpya caivetaretaraiḥ||26||",
    "928:105": "upapannāstathā ceme",
    "928:106": "mātsaryākrāntacetasaḥ|",
    "928:107": "pitṛloke nirāloke",
    "928:108": "kṛpaṇaṃ bhuñjate phalam||27||",
    "928:109": "sūcīchidropamamukhāḥ",
    "928:110": "parvatopamakukṣayaḥ|",
    "928:111": "kṣuttarṣajanitairduḥkhai",
    "928:112": "pīḍyante duḥkhabhāginaḥ||28||",
    "928:113": "āśayā samatikrāntā",
    "928:114": "dhāryamāṇāḥ svakarmabhiḥ|",
    "928:115": "labhante na hyamī bhoktuṃ",
    "928:116": "praviddhānyaśucīnyapi||29||",
    "928:117": "puruṣo yadi jānīta",
    "928:118": "mātsaryasyedṛśaṃ phalam|",
    "928:119": "sarvathā śibivaddadyā-",
    "928:120": "ccharīrāvayavānapi||30||",
    "928:121": "ime'nye narakaprakhye",
    "928:122": "garbhasaṃjñe'śucihrade|",
    "928:123": "upapannā manuṣyeṣu",
    "928:124": "duḥkhamarchanti jantavaḥ||31||"
}