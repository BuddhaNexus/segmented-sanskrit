{
  "SA08n962:0": "(3) kāyajugutsāvargaḥ",
  "SA08n962:1": "kāyasya svarūpanirūpaṇam",
  "SA08n962:2": "satkārairvṛhaṇairmāsairapi śayyāsanādibhiḥ |",
  "SA08n962:3": "na svīkartumayaṃ kāyaḥ kadācit kenacit kṛtaḥ ||1 ||",
  "SA08n962:4": "kāyasya riputvam",
  "SA08n962:5": "kṛtaghnasyāvidakṣasya nityaṃ randhraprahāriṇaḥ |",
  "SA08n962:6": "kaḥ kāyasya riporartha pāpaṃ kuryād vicakṣaṇaḥ ||2 ||",
  "SA08n962:7": "rogānī tamanarthānāṃ bahūnā bhājanaṃ tathā |",
  "SA08n962:8": "aśucyaṅgasya nikaraṃ kāyamityabhidhīyate ||3 ||",
  "SA08n962:9": "avijñeyaṃ maraṇaṃ jīvitañca kṣaṇikam",
  "SA08n962:10": "upasthitamavijñeyaṃ maraṇaṃ tattvacintakaiḥ |",
  "SA08n962:11": "jīvitaṃ ca kṣaṇādūrdhvaṃ na gacchati nirūpyate ||4 ||",
  "SA08n962:12": "kāyasya heyatvam",
  "SA08n962:13": "āyuṣkarmārthanirmāṇametaṃ kāyaṃ tyajyayam |",
  "SA08n962:14": "api viddhastathā śete kāṣṭhaloṣṭhasamo bhuvi ||5 ||",
  "SA08n962:15": "kṣaṇe kṣaṇe'pi kāyo'yaṃ jīryate na nivartate |",
  "SA08n962:16": "tathā yauvanamadairbālā muhayante (mugdhacetasaḥ) ||6 ||",
  "SA08n962:17": "dhanadhānyamadairmattāḥ kurvantyahitamātmanaḥ |",
  "SA08n962:18": "tannāśamupayātyevaṃ sa ca pāpena dahayate ||7 ||",
  "SA08n962:19": "adhārmikanindā",
  "SA08n962:20": "na manuṣyā manuṣyāste yebhyo dharmo na rocate |",
  "SA08n962:21": "na mārge ca sthitāstattve nirvāṇapuragāmike ||8 ||",
  "SA08n962:22": "manuṣyayoneḥ bhavasāgarataraṇopāyaḥ",
  "SA08n962:23": "kathaṃ prāpya hi mānuṣyaṃ śreyasāmālayaṃ mahat |",
  "SA08n962:24": "na jñānaplavamārūhaya taranti bhavasāgarāt ||9 ||",
  "SA08n962:25": "jīvanasya kṣaṇikatā",
  "SA08n962:26": "vidyudālātasadṛśaṃ gandharvanagaropamam |",
  "SA08n962:27": "sadā tad yāti rabhasaṃ jīvitaṃ sarvadehinām ||10 ||",
  "SA08n962:28": "śarīre na madaṃ kuryāt kṣaṇike bhaṅgure sadā |",
  "SA08n962:29": "itvare capale'sāre jarāmaraṇabhīruke ||11 ||",
  "SA08n962:30": "dhyāyinānnagataṃ hyetat śokānāmālayo mahān |",
  "SA08n962:31": "śubhāśubhānāṃ kṣetraṃ ca śarīramavadhīyate ||12 ||",
  "SA08n962:32": "saphalajīvanarahasyam",
  "SA08n962:33": "jñānaśīladayādānairyasya gātraṃ vibhūṣitam |",
  "SA08n962:34": "tasya sattvaikasārasya śarīraṃ saphalaṃ matam ||13 ||",
  "SA08n962:35": "dhātujñānāt mokṣaḥ",
  "SA08n962:36": "dhātūnāṃ mārakāt sarvamidaṃ muktaṃ kalevaram |",
  "SA08n962:37": "śarīradhātu vicayāt sākṣād bhavati netarāt ||14 ||",
  "SA08n962:38": "śarīradhātuṃ yo muktvā dhātuṣvanyeṣu rajyate |",
  "SA08n962:39": "sa dhātukatvaśikṣāto duḥkhenaiva pramucyate ||15 ||",
  "SA08n962:40": "hiraṇyadhāturna tathā duḥkhaśāntyai hi vartate |",
  "SA08n962:41": "śarīradhātutattvajño yathā duḥkhāt pramucyate ||16 ||",
  "SA08n962:42": "duḥkhād duḥkhodayastena duḥkhī na parirakṣyate |",
  "SA08n962:43": "pravīṇo rājacaurādibhayaiḥ sarvairūpadrutam ||17 ||",
  "SA08n962:44": "tasmādanarthakaṃ nityaṃ dūratastaṃ vivarjayet |",
  "SA08n962:45": "varjanāt sukhito duṣṭasaṅgrahād duḥkhitaḥ pumān ||18 ||",
  "SA08n962:46": "śarīradhātutattvajño dhātulakṣaṇatattvavit |",
  "SA08n962:47": "dhyānādhyayanasaṃsakto dahati kleśaparvatān ||19 ||",
  "SA08n962:48": "tasmāccharīrajān dhātūn paṇḍitaḥ pratyavekṣate |",
  "SA08n962:49": "teṣāṃ svalakṣaṇaṃ jñātvā mokṣo bhavati dehinām ||20 ||",
  "SA08n962:50": " ||iti kāyajugupsāvargastṛtīyaḥ ||"
}