{
    "860:0": "mahāpratisarāstotram",
    "860:1": "om namaḥ śrīmahāpratisarāyai",
    "860:2": "yasyāḥ smaraṇamātreṇa sarve pāpāḥ kṣayaṃ gatāḥ |",
    "860:3": "yayā yukto vajrakāyo namastasyai namo namaḥ || 1 ||",
    "860:4": "yāṃ smaran rākṣasaḥ krūro māṭharaṃ kukṣisaṃsthitam |",
    "860:5": "prākṣipad goviṣaṃ nadyāṃ namastasyai namo namaḥ || 2 ||",
    "860:6": "yā'rakṣat vaṇijaḥ putraṃ krūrasarpād vadhodyatāt |",
    "860:7": "viṣadāhamumūrṣuṃ ca namastasyai namo namaḥ || 3 ||",
    "860:8": "brahmadatto mahārājo yayā rakṣitamastakaḥ |",
    "860:9": "ripuṃ jitvā virājo'bhūnnamastasyai namo namaḥ || 4 ||",
    "860:10": "bhikṣurduḥśīlako rogī yayā kaṇṭhe prabandhitaḥ |",
    "860:11": "prāṇānmuktvā yayau svargaṃ namastasyai namo namaḥ || 5 ||",
    "860:12": "samudre potasaṃkṣubdhe vaṇijāṃ prāṇarakṣakaḥ |",
    "860:13": "yāṃ smaran sārthavāho'bhūnnamastasyai namo namaḥ || 6 ||",
    "860:14": "yasyāṃ ca pratibaddhāyāṃ bhāryāyāṃ sutamāptavān |",
    "860:15": "prasāritabhujo rājā namastasyai namo namaḥ || 7 ||",
    "860:16": "daridro yāṃ prati smṛtvā dīnārān pradadau jine |",
    "860:17": "rājā'bhīṣṭapradātā'bhūnnamastasyai namo namaḥ || 8 ||",
    "860:18": "yāṃ prabaddhvā'surairyuddhaṃ śakraścūḍāmaṇau prabhuḥ |",
    "860:19": "labdhavān vijayaṃ vajrī namastasyai namo namaḥ || 9 ||",
    "860:20": "yasyā mantrabalenaiva pūrya pāramitāśca ṣaṭ |",
    "860:21": "mārā jitā jinairbuddhairnamastasyai namo namaḥ || 10 ||",
    "860:22": "apadhīro vadhārho'pi prakṣiptaḥ sarvasaṅkaṭe |",
    "860:23": "yāṃ smṛtvā parimukto'bhūnnamastasyai namo namaḥ || 11 ||",
    "860:24": "yayā bandhitakaṇṭhaśca mukto'bhūt pāpasaṅkaṭāt |",
    "860:25": "nagare nāyako'bhūcca namastasyai namo namaḥ || 12 ||",
    "860:26": "yā cā'parājitā vidyā sarvabuddhaiśca dhāritā |",
    "860:27": "mudritā bhāṣitā nityaṃ paṭhitā parideśitā || 13 ||",
    "860:28": "likhitā moditā sattvahitāya pūjitā sadā |",
    "860:29": "smṛtā kāyagatā kṛtvā namastasyai namo namaḥ || 14 ||",
    "860:30": "yasyāḥ smaraṇamātrānna durlabhaṃ bhuvanatraye |",
    "860:31": "pāṭhasvādhyāyanādvāpi namastasyai namo namaḥ || 15 ||",
    "860:32": "yā vidyā durlabhā buddhairvyākṛtā suptaśaṃsitā |",
    "860:33": "mahatī dhāraṇī khyātā sarvapāpakṣayaṅkarī || 16 ||",
    "860:34": "mahābalā mahāvīryā mahātejā mahatprabhā |",
    "860:35": "mahāguṇavatī vidyā sarvabhāravidāraṇī || 17 ||",
    "860:36": "pāpasandhisamudghātī mārabandhapramocanī |",
    "860:37": "jananī bodhisattvānāṃ sarvaduṣṭavināśinī || 18 ||",
    "860:38": "rakṣaṇī poṣaṇī dhātrī paramantravighātinī |",
    "860:39": "kārkhodaviṣayogānāṃ vidhvaṃsanakarī śivā || 19 ||",
    "860:40": "mahādhyānaratānāṃ ca gṛhṇatāṃ likhatāṃ sadā |",
    "860:41": "pāṭhādhyayanakṛtāṃ nityaṃ dadhatāṃ śṛṇvatāṃ tathā || 20 ||",
    "860:42": "parebhyo deśitā caiva nityaṃ manasi bhāvitā |",
    "860:43": "sā pustakagatāṃ kṛtvā pūjyamānā namaskṛtā || 21 ||",
    "860:44": "sarvapāpaharī bhadrā bodhisaṃbhārapūriṇī |",
    "860:45": "namastasyai namastasyai namastasyai namo namaḥ || 22 ||",
    "860:46": "yasyā mantraprabhāveṇa sarvabhayānyupadravāḥ |",
    "860:47": "duṣṭāḥ suramanuṣyāśca daityagandharvarākṣasāḥ || 23 ||",
    "860:48": "grahāḥ skandā apasmārāḥ piśācā yakṣakinnarāḥ |",
    "860:49": "ḍākinyaḥ śākinīsaṃghā nāgā kārkhodavyādhayaḥ || 24 ||",
    "860:50": "jvarāśca vividhā rogāḥ parakarmakṛtāstathā |",
    "860:51": "viṣāgniśastramantrāṇi vidyutaḥ kālavāyavaḥ || 25 ||",
    "860:52": "ativṛṣṭiranāvṛṣṭiḥ sarvaśatrubhayāni ca |",
    "860:53": "tathānye pāpasargā vā vinaśyanti na saṃśayaḥ || 26 ||",
    "860:54": "sarvakāryāṇi siddhyanti namastasyai namo namaḥ |",
    "860:55": "yaścaitāṃ dhārayedvidyāṃ kaṇṭhe bāhau ca mastake || 27 ||",
    "860:56": "nityaṃ rakṣanti devāstaṃ daityā nāgāśca mānuṣāḥ |",
    "860:57": "gandharvāḥ kinnarā yakṣā bhūtapretapiśācakāḥ || 28 ||",
    "860:58": "ḍākinyo rākṣasā dūtyaḥ kūṣmāṇḍāḥ kaṭhapūtanāḥ |",
    "860:59": "trisandhyaṃ yaḥ paṭhennityaṃ buddhā rakṣanti taṃ sadā || 29 ||",
    "860:60": "pratyekāḥ śrāvakāścaiva bodhisattvā mahardhikāḥ |",
    "860:61": "yoginaḥ siddhamantrāśca mahāvīryā maharṣayaḥ || 30 ||",
    "860:62": "vajrapāṇiśca yakṣendraḥ śakraśca tridaśaiḥ saha |",
    "860:63": "catvāraśca mahārājā brahmaviṣṇumaheśvarāḥ || 31 ||",
    "860:64": "nandikṛṣṇo mahākālaḥ kārtikeyo gaṇeśvaraḥ |",
    "860:65": "bhairavā mātṛkā durgāstathā'nye mārakāyikāḥ || 32 ||",
    "860:66": "vidyādevyo mahāvīryā mahābalaparākramāḥ |",
    "860:67": "māmakī bhṛkuṭī tārā cāṅkuśī vajraśṛṅkhalā || 33 ||",
    "860:68": "mahāśvetā mahākālī vajradūtī supāśikā |",
    "860:69": "vajramālā mahāvidyā suvīryā'mṛtakuṇḍalī || 34 ||",
    "860:70": "vajrā'parājitā caṇḍī kālakarṇī mahābalā |",
    "860:71": "tathā dhanyā mahābhāgā padmakuṇḍalireva ca || 35 ||",
    "860:72": "maṇicūḍā puṣpadantī svarṇakeśī ca piṅgalā |",
    "860:73": "ekajaṭā mahādevī dhanyā vidyunmālinī || 36 ||",
    "860:74": "kapālinī ca laṅkeśī brahmakṣitikanāyikā |",
    "860:75": "hārītī pāñcikāścaiva śaṅkhinī kūṭadantinī || 37 ||",
    "860:76": "śrīḥ sarasvatī lakṣmīḥ siddheśvarī sadānugā |",
    "860:77": "tamevā'nye'pi rakṣanti yasya vidyā kare sthitā || 38 ||",
    "860:78": "sa bhavet sarvasattvānāṃ mokṣārthaṃ ca samudyataḥ |",
    "860:79": "namastasyai namastasyai namastasyai namo namaḥ || 39 ||",
    "860:80": "śrīmahāpratisarāstotraṃ samāptam ||"
}