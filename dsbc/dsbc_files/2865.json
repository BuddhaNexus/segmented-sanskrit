    "2865:255": "none;mso-layout-grid-align:",
    "2865:256": "none;text-autospace:none“>",
    "2865:257": "normal;mso-pagination:",
    "2865:258": "none;mso-layout-grid-align:",
    "2865:259": "none;text-autospace:",
    "2865:260": "none“> dharmavakpatho'mitābhasamādhiḥ samārudaḥ",
    "2865:261": "sampprāptaḥ dharmaḥ paramārthasatyaṃ ,",
    "2865:262": "vajraṃ saṃvṛtisatyam|",
    "2865:263": "dharmasamāyuktaṃ vajraṃ",
    "2865:264": "dharmavajraṃ mahāvajradharapadaṃ samāvahet , prāpnuyāt|",
    "2865:265": "trivajrakalpamityādi vivṛtārtham|",
    "2865:266": "normal;mso-pagination:",
    "2865:267": "none;mso-layout-grid-align:",
    "2865:268": "none;text-autospace:none“>",
    "2865:269": "normal;mso-pagination:",
    "2865:270": "none;mso-layout-grid-align:",
    "2865:271": "none;text-autospace:",
    "2865:272": "none“> sarvatathāgato jñānasattvaḥ vāgvajraṃ",
    "2865:273": "samādhisattvaḥ samayaḥ samayasattvaḥ sarvatathāgavāgvajrasamayānāṃ saṃbhavo",
    "2865:274": "yasmin sa tathoktaḥ samādhiḥ|",
    "2865:275": "normal;mso-pagination:",
    "2865:276": "none;mso-layout-grid-align:",
    "2865:277": "none;text-autospace:none“>",
    "2865:278": "normal;mso-pagination:",
    "2865:279": "none;mso-layout-grid-align:",
    "2865:280": "none;text-autospace:",
    "2865:281": "none“> khavajetyādi|",
    "2865:282": "mahāvajradharasamādhivat sarva saṃpādya",
    "2865:283": "svabimbapuruṣaṃ samayasattvaṃ niṣpādya cittaṃ jñānasattvastatsaṃsthitaṃ",
    "2865:284": "jñānasattvahṛdayasaṃsthitaṃ hūṃkāraṃ samādhisattvākhyaṃ cintayet|",
    "2865:285": "normal;mso-pagination:",
    "2865:286": "none;mso-layout-grid-align:",
    "2865:287": "none;text-autospace:none“>",
    "2865:288": "normal;mso-pagination:",
    "2865:289": "none;mso-layout-grid-align:",
    "2865:290": "none;text-autospace:",
    "2865:291": "none“> evaṃ trisattvamayaṃ mahāsamayatattvama kṣobhyaṃ",
    "2865:292": "pañcavarṇaraśmiprabhāmaṇḍalopetaṃ vibhāvayet|",
    "2865:293": "jñānavajreṇākṣobhyayoginā|",
    "2865:294": "sarvavajrajinau'kṣobhyaḥ tasyālayaṃ mahāmudrārupam|",
    "2865:295": "kartavyaṃ niṣpādya| evaṃ",
    "2865:296": "sātatyena catuḥsandhyamabhyasyate saparipakkakuśalamūlatvāt|",
    "2865:297": "vajropamasamādhimadhimadhigamyehaiva janmani mahāmudrasiddhi pratilabhata iti",
    "2865:298": "darśayitumāha|",
    "2865:299": "vajracittetyādi|",
    "2865:300": "vajraṃ paramārthasatyaṃ cittaṃ samvṛtisatyaṃ",
    "2865:301": "tābhyāṃ ghaṭitaḥ vajracittamayaḥ|",
    "2865:302": "devamanuṣyāṇāmanuśāsakatvāt śāstā|",
    "2865:303": "jñānaguṇāḥ",
    "2865:304": "kāmaiśvaryādayo'ṣṭau teṣāmudadhirākaratvāt|",
    "2865:305": "trivajrakalpamityādi gatārtham|",
    "2865:306": "normal;mso-pagination:",
    "2865:307": "none;mso-layout-grid-align:",
    "2865:308": "none;text-autospace:none“>",
    "2865:309": "normal;mso-pagination:",
    "2865:310": "none;mso-layout-grid-align:",
    "2865:311": "none;text-autospace:",
    "2865:312": "none“> vajraṃ samayasattvaḥ cittaṃ jñānasattvaḥ guhyāṃ",
    "2865:313": "samādhisattvaḥ|",
    "2865:314": "evaṃ trisattvātmakatvād vajracittaguhya mahāvajradhara ityāha|",
    "2865:315": "sarvatathāgatetyādinā prakaraṇārthamupasaṃharati|",
    "2865:316": "sarvatathagato mahāvajradharaḥ|",
    "2865:317": "kāyavākcitta vairocanaditrayam|",
    "2865:318": "sa mayo'moghasiddhiḥ|",
    "2865:319": "vajro ratnasaṃbhavaḥ| eṣāṃ",
    "2865:320": "samādhirabhedopacārāt sarvatathāgatakāyavākcittasamayavajro nāma|",
    "2865:321": "yathārutam|",
    "2865:322": "normal;mso-pagination:",
    "2865:323": "none;mso-layout-grid-align:",
    "2865:324": "none;text-autospace:none“>",
    "2865:325": "normal;mso-pagination:",
    "2865:326": "none;mso-layout-grid-align:",
    "2865:327": "none;text-autospace:",
    "2865:328": "none“> evaṃ kalpitayogasya phalarupeṇa niṣpannakramaṃ",
    "2865:329": "sūcayitvā tatsākṣādeva darśayitumāha|",
    "2865:330": "mahavajradharamityādi|",
    "2865:331": "jñāyata iti jñānaṃ",
    "2865:332": "sthiracalaṃ tasya maṇḍalaṃ samuhaḥ trailokyaṃ tanmadhye mahavajraṃ svaṃ",
    "2865:333": "mahāmudrārupaṃ samādhāyādhipatitvena sthāpayitvā sarvakāyeṣu sthāvarajaṃgameṣu",
    "2865:334": "khakāramākāśīkaraṇamanubhedakrameṇa sarva nirābhāsīkṛtyātmanyanukrameṇa praveśaḥ|",
    "2865:335": "taṃ krritvā khavajrajñānasamo bhavet|",
    "2865:336": "trisattvātmaka ekaḥ syāt| khamiti",
    "2865:337": "prabhāsvaraḥ|",
    "2865:338": "normal;mso-pagination:",
    "2865:339": "none;mso-layout-grid-align:",
    "2865:340": "none;text-autospace:none“>",
    "2865:341": "normal;mso-pagination:",
    "2865:342": "none;mso-layout-grid-align:",
    "2865:343": "none;text-autospace:",
    "2865:344": "none“> tasya ca buddhaiḥ vairocanādisvabhāvaiḥ",
    "2865:345": "rupaskandhādibhirbodhisattvaiḥ kṣitigarbhadisvabhāvaiḥ cakṣurādibhirmuhurmuhuriti|",
    "2865:346": "rupaskandhagatetyādikrameṇa pratikṣaṇaṃ pūjyamānaḥ|",
    "2865:347": "jñānatrayātmake svasmin",
    "2865:348": "praveśyamānaritradhā prajñopāyopalabdhasvabhāvena kalpyata iti trikalpaṃ",
    "2865:349": "jñānatrayaṃ tat samayati vilayaṃ gacchati yasmin tat trikalpasamayaṃ",
    "2865:350": "prabhāsvaraṃ taṃ tiṣṭhet|",
    "2865:351": "tiṣṭhan buddhairapi na dṛśyata iti|",
    "2865:352": "buddhāstrīṇi",
    "2865:353": "jñānāni| tairapi yathā na dṛśyate yathādarśanamanābhāsastathā tiṣṭhedityāha",
    "2865:354": "bhagavān khavajrasamaya iti|",
    "2865:355": "khavajraṃ prabhāsvaraṃ tasmāt sameti udracchatīti",
    "2865:356": "khavajrasamayo mahāvajradharaḥ vakṣyamāṇa kaṃ vyutthānasamādhi sūcayannāha",
    "2865:357": "kāyetyādi| kāyavākcittaṃ mahāmudrā tasyā antarddhānaṃ prabhāsvaraṃ tasmāt saṃbhatīti",
    "2865:358": "saṃbhavaḥ vyūhaḥ sthiracalasarvabhāvātmakaṃ jñānakāyaṃ tasya mālā yathāśayaṃ",
    "2865:359": "vairocanādirupeṇa pravṛttiḥ sā yasmin samādhau cittakṣaṇe sa tathoktaḥ|",
    "2865:360": "normal;mso-pagination:",
    "2865:361": "none;mso-layout-grid-align:",
    "2865:362": "none;text-autospace:none“>",
    "2865:363": "normal;mso-pagination:",
    "2865:364": "none;mso-layout-grid-align:",
    "2865:365": "none;text-autospace:",
    "2865:366": "none“> tameva sarvāsamādhi darśayannāha dhyātvetyādi|",
    "2865:367": "svamantrapuruṣo'tra pariśuddhamahāmudrārupaṃ vajramaṇḍamadhyataḥ",
    "2865:368": "prabhāsvaramadhyādutthitaṃ dhyātvā tadanantaraṃ prākṛtasattvānāṃ viṣayaubhūtanirmāṇa",
    "2865:369": "normal;mso-pagination:",
    "2865:370": "none;mso-layout-grid-align:",
    "2865:371": "none;text-autospace:none“>",
    "2865:372": "normal;mso-pagination:",
    "2865:373": "none;mso-layout-grid-align:",
    "2865:374": "none;text-autospace:",
    "2865:375": "none“> kāyaṃ parigṛhyā prāṇāyāmāṅgabhūtamanāhataṃ haṃkāravajrākhyaṃ",
    "2865:376": "hṛdaye kṛtvā sthāpayitvā tadanantaraṃ raśmivibhāvanā kāryā|",
    "2865:377": "daśa raśmaya| prāṇāyāme",
    "2865:378": "sthitāḥ| teṣāṃ vibhāvanā dakṣiṇādibhedena praveśādikrameṇa pravṛttiḥ|",
    "2865:379": "normal;mso-pagination:",
    "2865:380": "none;mso-layout-grid-align:",
    "2865:381": "none;text-autospace:none“>",
    "2865:382": "normal;mso-pagination:",
    "2865:383": "none;mso-layout-grid-align:",
    "2865:384": "none;text-autospace:",
    "2865:385": "none“> hūmiti anabhilāpyānabhilāpyasūcakam|",
    "2865:386": "mañjuravinaśvaraḥ śrī [ ḥ ] prabhāsvaraḥ|",
    "2865:387": "tasmāt samudetīti mañjuśrīsamayaḥ|",
    "2865:388": "saṃbhujyate'vaivartikairviṣayīkriyata iti sa eva saṃbhogaḥ jñānasamayaḥ kāyaḥ",
    "2865:389": "taṃ prāpya kāyavākcittavajrāṇi nirmitakāyavākcittāni tāni yasya santi sa",
    "2865:390": "kāyavākcittavajriṇaḥ vajrīti prāpte|",
    "2865:391": "bodhiḥ paramārthaḥ sattvaḥ saṃvṛtisatyaṃ",
    "2865:392": "te ātmā deho yasya sa bodhisattvātmā|",
    "2865:393": "daśa bhūmayaḥ daśa raśmayaḥ|",
    "2865:394": "teṣu pratiṣṭhitaḥ|",
    "2865:395": "yo'nantaroktakrameṇa bhāvakaḥ sa evaṃ saṃbhavet|",
    "2865:396": "normal;mso-pagination:",
    "2865:397": "none;mso-layout-grid-align:",
    "2865:398": "none;text-autospace:none“>",
    "2865:399": "normal;mso-pagination:",
    "2865:400": "none;mso-layout-grid-align:",
    "2865:401": "none;text-autospace:",
    "2865:402": "none“> bodhisa [ 74a ] ttvetyādinā samādhi samāpayati|",
    "2865:403": "satyadvayena",
    "2865:404": "parigṛhītaṃ rupaṃ bodhisattvaḥ|",
    "2865:405": "tacca jñāṃ sa eva samayaḥ| sa eva",
    "2865:406": "traidhātukācchādakatvāccandraḥ āsaṃsāraṃ sthitvā sattvārthakaraṇād vajraḥ|",
    "2865:407": "tannippādakasamādhirapi tathocyate|",
    "2865:408": "sandhyābhāṣā|",
    "2865:409": "normal;mso-pagination:",
    "2865:410": "none;mso-layout-grid-align:",
    "2865:411": "none;text-autospace:none“>",
    "2865:412": "normal;mso-pagination:",
    "2865:413": "none;mso-layout-grid-align:",
    "2865:414": "none;text-autospace:",
    "2865:415": "none“> anantaroktakrameṇopāttanirmāṇakāyasya cakṣurādyātanaviśuddhidvāreṇa",
    "2865:416": "phalaṃ darśaṃyitumāha|",
    "2865:417": "khadhātvityādi|",
    "2865:418": "ādau cakṣurgolakaśūnyīkaraṇena labdhaṃ",
    "2865:419": "yatsausīrya tat khadhātuḥ|",
    "2865:420": "tanmadhyagataṃ thlīṃ kāraṃ jvālasuprabhaṃ",
    "2865:421": "sūryenduraśmibhirdīpyamānaṃ asyante kṣipyante yenetyastraṃ paramāḥ",
    "2865:422": "śakrādivighnagaṇāḥ tadarthamastraṃ paramāstram ,",
    "2865:423": "tanniṣpannena cakṣurbhramaṇena",
    "2865:424": "sarvavighravidhvaṃsanāt paramāstraṃ thlīṃkāraṃ taṃ vajrakāyena kṣitigarbhasvabhāvena",
    "2865:425": "dhyātvā khavajrakāyasamo bhavediti|",
    "2865:426": "mahāvajradhara ivānantalokadhātusthitaḥ",
    "2865:427": "sarvabhāvān hastamalakavat paśyet|",
    "2865:428": "thlīṃ iti uktārthasūcakaṃ bījam|",
    "2865:429": "normal;mso-pagination:",
    "2865:430": "none;mso-layout-grid-align:",
    "2865:431": "none;text-autospace:none“>",
    "2865:432": "normal;mso-pagination:",
    "2865:433": "none;mso-layout-grid-align:",
    "2865:434": "none;text-autospace:",
    "2865:435": "none“> khavajrasamayo mahāvajradharaḥ|",
    "2865:436": "tasya vyuho",
    "2865:437": "mahāmudrā| sā ālayaḥ sthanaṃ yasya kṣitigarbhasya sa khavajrasamayavyūhālayaḥ|",
    "2865:438": "tatscakasamādhirapi tathocyate|",
    "2865:439": "normal;mso-pagination:",
    "2865:440": "none;mso-layout-grid-align:",
    "2865:441": "none;text-autospace:none“>",
    "2865:442": "normal;mso-pagination:",
    "2865:443": "none;mso-layout-grid-align:",
    "2865:444": "none;text-autospace:",
    "2865:445": "none“> evamanantaroktakrameṇa vakṣayamāṇena ca",
    "2865:446": "divyavakṣuḥśrotrādikaṃ bhāvayati yaḥ sa yogī pañcābhijñāsamo",
    "2865:447": "mahāvajradharatulyo jāyate|",
    "2865:448": "katham ? buddhābhijñāgrasamayaiḥ buddhāstryadhvavartino",
    "2865:449": "normal;mso-pagination:",
    "2865:450": "none;mso-layout-grid-align:",
    "2865:451": "none;text-autospace:none“>",
    "2865:452": "normal;mso-pagination:",
    "2865:453": "none;mso-layout-grid-align:",
    "2865:454": "none;text-autospace:",
    "2865:455": "none“> jināḥ teṣāmabhijñāgrasamayā divyanetrādayaḥ|",
    "2865:456": "tairmahāvajradharasamo bhavet|",
    "2865:457": "idamiti yadanantaroktaṃ divyaṃ cakṣuḥ",
    "2865:458": "sarvasiddhīnāmiti|",
    "2865:459": "sarve svaparayūthyāḥ teṣāṃ siddhīnāṃ buddhaṃ svacittaṃ tad",
    "2865:460": "yathābhūtamabhijānatīti buddhābhijñā mahāyoginaḥ|",
    "2865:461": "teṣāmagrasādhanam",
    "2865:462": "sarvasiddhīnāmapi pradhānasādhanam|",
    "2865:463": "buddhamaṇḍalaṃ sarvatathāgatasamayamuttam|",
    "2865:464": "vajravadabhedyātmakaḥ sattvaḥ vajrasattvaḥ|",
    "2865:465": "taṃ bhāvayitvā niṣpādya",
    "2865:466": "khadhātumadhyagataṃ śrotrasthānabhāvitaprabhāsvaramadhyagataṃ jñānaṃ vajrapāṇīḥ|",
    "2865:467": "tanniṣpādakamoṅkāraṃ bhāvayet|",
    "2865:468": "normal;mso-pagination:",
    "2865:469": "none;mso-layout-grid-align:",
    "2865:470": "none;text-autospace:none“>",
    "2865:471": "normal;mso-pagination:",
    "2865:472": "none;mso-layout-grid-align:",
    "2865:473": "none;text-autospace:",
    "2865:474": "none“> trivajrasamayo vajrapāṇiḥ|",
    "2865:475": "tasya sādhanena",
    "2865:476": "tanmayīkaraṇena trivajrākṣobhyo mahāvajradharaḥ",
    "2865:477": "anantalokadhātusthitaividharābdānāṃ śrotrabilapatitaikaśabdavat grahaṇena",
    "2865:478": "tatsamatvāt trivajrākṣobhyasamo bhavati yogītyāha bhagavānakṣobhyavajro",
    "2865:479": "mahāvajradharaḥ|",
    "2865:480": "normal;mso-pagination:",
    "2865:481": "none;mso-layout-grid-align:",
    "2865:482": "none;text-autospace:none“>",
    "2865:483": "normal;mso-pagination:",
    "2865:484": "none;mso-layout-grid-align:",
    "2865:485": "none;text-autospace:",
    "2865:486": "none“> akṣobhyasamakāyeneti|",
    "2865:487": "mahāvajradharatulyakāyaḥ",
    "2865:488": "tathaivāprākṛtavākcittadhāraṇāt vākcittāgradhṛk sadā sarvakālaṃ sarveṣu",
    "2865:489": "lokadhātuṣu pūjyate akṣobhyavajriṇeti śrotrasthena vajrapāṇinā pūjyate sevyate|",
    "2865:490": "normal;mso-pagination:",
    "2865:491": "none;mso-layout-grid-align:",
    "2865:492": "none;text-autospace:none“>",
    "2865:493": "normal;mso-pagination:",
    "2865:494": "none;mso-layout-grid-align:",
    "2865:495": "none;text-autospace:",
    "2865:496": "none“> akṣobhyasamayo'kṣobhyaḥ tasmāt saṃbhavatīti akṣobhyasamayābhisaṃbhayo",
    "2865:497": "vajrapāṇiḥ|",
    "2865:498": "tadutpādakaḥ samādhirapi tathoktaḥ|",
    "2865:499": "normal;mso-pagination:",
    "2865:500": "none;mso-layout-grid-align:",
    "2865:501": "none;text-autospace:none“>",
    "2865:502": "normal;mso-pagination:",
    "2865:503": "none;mso-layout-grid-align:",
    "2865:504": "none;text-autospace:",
    "2865:505": "none“> khadhātpvityādinā ākāśagarbhasamādhimāha|",
    "2865:506": "khadhātumadhyagataṃ prabhāsvaramadhvarga buddhamaṇḍalaṃ cintet ākāśavajraṃ",
    "2865:507": "prabhāvitveti|",
    "2865:508": "mahāmudrārupasyāpi ghrāṇendriyadeśe ākāśavajraṃ prabhāsvaraṃ",
    "2865:509": "dhyātvā ratnaḥ|",
    "2865:510": "ākāśagarbhaḥ tanniṣpādaka oṃkāro ratna oṃkārastaṃ vibhāvayet|",
    "2865:511": "normal;mso-pagination:",
    "2865:512": "none;mso-layout-grid-align:",
    "2865:513": "none;text-autospace:none“>",
    "2865:514": "normal;mso-pagination:",
    "2865:515": "none;mso-layout-grid-align:",
    "2865:516": "none;text-autospace:",
    "2865:517": "none“> trivajrasamayadhyāneneti|",
    "2865:518": "trivajraḥ trividho",
    "2865:519": "gandhaḥ| taṃ sameti gacchatīti trivajrasamayaḥ|",
    "2865:520": "ākāśagarbhaḥ|",
    "2865:521": "tasya dhyānena",
    "2865:522": "tatsvabhāvālambanena|",
    "2865:523": "trivajraketumaṃhāvajradharo'nekalokadhātusthitagandhagrahaṇena",
    "2865:524": "tatsamo bhavet ityāha bhagavān ratnaketuvajro mahāvajradharaḥ|",
    "2865:525": "normal;mso-pagination:",
    "2865:526": "none;mso-layout-grid-align:",
    "2865:527": "none;text-autospace:none“>",
    "2865:528": "normal;mso-pagination:",
    "2865:529": "none;mso-layout-grid-align:",
    "2865:530": "none;text-autospace:",
    "2865:531": "none“> kāyetyādi|",
    "2865:532": "evaṃbhāvakaḥ aprākṛtakāyavākcittena",
    "2865:533": "ratnaketusamaprabha iti|",
    "2865:534": "gaganagajrasamādhinā ratnaketusamarddhiḥ sa bhavet|",
    "2865:535": "bodhinairātyaṃ prabhāsvaram tatra jñānaṃ catuḥśūnyātmakaṃ mahāvajradharupam|",
    "2865:536": "tadeva śrāvakādyaviṣayatvād guhyām|",
    "2865:537": "tena samamālayaṃ śarīraṃ yasya sa",
    "2865:538": "bodhinairātmyajñānaguhyāsamālayaḥ sādhakaḥ ratnasamayaḥ|",
    "2865:539": "normal;mso-pagination:",
    "2865:540": "none;mso-layout-grid-align:",
    "2865:541": "none;text-autospace:none“>",
    "2865:542": "normal;mso-pagination:",
    "2865:543": "none;mso-layout-grid-align:",
    "2865:544": "none;text-autospace:",
    "2865:545": "none“> triṣprakāro gandha [ ḥ ] saṃbhujyate anubhūyate yena sa ratnasamayasaṃbhogavajra",
    "2865:546": "ākāśagarbhaḥ|",
    "2865:547": "tannivartakasamādhirapi tathā|",
    "2865:548": "normal;mso-pagination:",
    "2865:549": "none;mso-layout-grid-align:",
    "2865:550": "none;text-autospace:none“>",
    "2865:551": "normal;mso-pagination:",
    "2865:552": "none;mso-layout-grid-align:",
    "2865:553": "none;text-autospace:",
    "2865:554": "none“> khadhātvityādi|",
    "2865:555": "pūrvavanmahāmudrārupaṃ niṣpādya",
    "2865:556": "tasmin jihvāpradeśe lokānamīśvaro bhūtakoṭistatprabhāvitvāt dharmo lokeśvaraḥ",
    "2865:557": "tannivartaka oṃkāro dharma oṃkāraḥ taṃbhāvayet|",
    "2865:558": "normal;mso-pagination:",
    "2865:559": "none;mso-layout-grid-align:",
    "2865:560": "none;text-autospace:none“>",
    "2865:561": "normal;mso-pagination:",
    "2865:562": "none;mso-layout-grid-align:",
    "2865:563": "none;text-autospace:",
    "2865:564": "none“> trivajretyādi|",
    "2865:565": "trivajraṃ trividho rasaḥ taṃ",
    "2865:566": "sameti gaccatīti trivajrasamayo lokeśvaraḥ|",
    "2865:567": "tasya dhyānena taddvāreṇa",
    "2865:568": "trividharasānubhavanāt trivajrāmito mahāvajradharaḥ daśadiglokadhātuparyāyeṣu",
    "2865:569": "rasānubhāvanena tatsamo bhavet ityāha bhagavānamitavajraḥ|",
    "2865:570": "normal;mso-pagination:",
    "2865:571": "none;mso-layout-grid-align:",
    "2865:572": "none;text-autospace:none“>",
    "2865:573": "normal;mso-pagination:",
    "2865:574": "none;mso-layout-grid-align:",
    "2865:575": "none;text-autospace:",
    "2865:576": "none“> ya evamālambayati ,",
    "2865:577": "bhavet sa kāyādīnāmamitāyuḥsamatejāḥ|",
    "2865:578": "mṛdvindriyādisarvasattvānāṃ",
    "2865:579": "mahāyānapathaḥ buddhatvamārgaḥ|",
    "2865:580": "tadartha upāyo ( udayo )",
    "2865:581": "yasya sa mahāyānapathodayo bhavet|",
    "2865:582": "normal;mso-pagination:",
    "2865:583": "none;mso-layout-grid-align:",
    "2865:584": "none;text-autospace:none“>",
    "2865:585": "normal;mso-pagination:",
    "2865:586": "none;mso-layout-grid-align:",
    "2865:587": "none;text-autospace:",
    "2865:588": "none“> amitaguṇo mahāvajradharaḥ tasmin",
    "2865:589": "traidhātukasthitasarvarasānāṃ jihvendriyasthaikarasavat grahaṇena prabhā sā",
    "2865:590": "śohamānā śrīryasya so'mitaguṇaprabhāsaśrīḥ lokeśvaraḥ tatsūcakasamādhirapi",
    "2865:591": "tadākhyaḥ|",
    "2865:592": "normal;mso-pagination:",
    "2865:593": "none;mso-layout-grid-align:",
    "2865:594": "none;text-autospace:none“>",
    "2865:595": "normal;mso-pagination:",
    "2865:596": "none;mso-layout-grid-align:",
    "2865:597": "none;text-autospace:",
    "2865:598": "none“> khadhātvityādi|",
    "2865:599": "pūrvavadādiyogaṃ kṛtvā samaya oṃkāraṃ",
    "2865:600": "prabhāvitvā vajrotpalaṃ prabhāvayedityāmrāyaḥ|",
    "2865:601": "samayaḥ sarvanivaraṇaviṣkambhī",
    "2865:602": "tanniṣpādakaṃ bījaṃ samaya oṃkāraḥ sparśendriyasthāne prabhāsvaraśodhanapūrvakaṃ",
    "2865:603": "tatsamaya oṃkāraṃ prabhāvitvā vajramevotpalaṃ mukulākaratvād vajrotpalaṃ taṃ",
    "2865:604": "prabhāvayet|",
    "2865:605": "normal;mso-pagination:",
    "2865:606": "none;mso-layout-grid-align:",
    "2865:607": "none;text-autospace:none“>",
    "2865:608": "normal;mso-pagination:",
    "2865:609": "none;mso-layout-grid-align:",
    "2865:610": "none;text-autospace:",
    "2865:611": "none“> trivajraṃ trividhaṃ sparśa tat sameti",
    "2865:612": "gacchatīti trivajrasamayaḥ sarvanivaraṇaviṣkambhī|",
    "2865:613": "tasya dhyānena",
    "2865:614": "trivajro'moghasiddhiḥ",
    "2865:615": "aparyantalokadhātusthitānekasparśānāmekamudrāpadhmagatasparśavajravadanubhavanena",
    "2865:616": "tatsamo bhavet|",
    "2865:617": "ityāha bhagavānamoghavajro mahāvajradharaḥ|",
    "2865:618": "normal;mso-pagination:",
    "2865:619": "none;mso-layout-grid-align:",
    "2865:620": "none;text-autospace:none“>",
    "2865:621": "normal;mso-pagination:",
    "2865:622": "none;mso-layout-grid-align:",
    "2865:623": "none;text-autospace:",
    "2865:624": "none“> asyānuśaṃsāpradarśanaṃ kāyetyādi| ya evaṃ",
    "2865:625": "bhāvayati sa kāyādinā vajrāmoghaḥ amoghasiddhiḥ tatsamā prabhā yasya sa",
    "2865:626": "tathoktaḥ| jñānaṃ sarvanivaraṇaviṣkambhī tasyodradhiḥ sthānamamoghasiddhiḥ| śrīḥ",
    "2865:627": "paramānandasukhaṃ tadasyāstīti śrīmān sarvasattvānāmarthaḥ sarvasattvārthaḥ sarvasattvārthajananalakṣaṇaḥ sa saṃbhavati",
    "2865:628": "yasmāditi sarvasattvasaṃbhavaḥ amoghasamayo'moghasiddhiḥ|",
    "2865:629": "tasmāt saṃbhavo yasya",
    "2865:630": "sa sarvanivaraṇaviṣkambhī|",
    "2865:631": "tasya raśmayaḥ tadvinirgatabodhicittabindavaḥ| teṣāṃ",
    "2865:632": "saṃbhavaḥ prasavo yasmin samādhau yuktaḥ sa tathoktaḥ|",
    "2865:633": "normal;mso-pagination:",
    "2865:634": "none;mso-layout-grid-align:",
    "2865:635": "none;text-autospace:none“>",
    "2865:636": "normal;mso-pagination:",
    "2865:637": "none;mso-layout-grid-align:",
    "2865:638": "none;text-autospace:",
    "2865:639": "none“> evaṃ boddhisattvānāṃ cakṣurindriyādiṣu",
    "2865:640": "nyāsamuktvā tathāgatanyāsenāpi niṣpādayediti darśayannāha|",
    "2865:641": "khadhātvityādi|",
    "2865:642": "khadhātustathatā|",
    "2865:643": "tanmadhyādāgataḥ khadhātumadhyagataṃ utpatikrameṇa niṣpannaṃ",
    "2865:644": "suprabhaṃ buddhamaṇḍalaṃ mahāvajradharupaṃ cintedātmānaṃ bhāvayet|",
    "2865:645": "tasya cakṣuḥsthāne",
    "2865:646": "vairocanavajraṃ prabhāvitvā trikāya oṃkāraṃ prabhāvayediti|",
    "2865:647": "prabhāvitvā trikāya",
    "2865:648": "oṃkāraṃ vairocanavajraṃ prabhāvayedityānupūvryā yogaḥ|",
    "2865:649": "trikāyo vairocanaḥ tanniṣpādaka",
    "2865:650": "oṃkāraḥ trikāya oṃkāraḥ|",
    "2865:651": "taṃ cakṣurgolake bhāvayitvā tatparāvṛtyā vairocanameva",
    "2865:652": "cakṣurindriyasvarupeṇa tāvat|",
    "2865:653": "normal;mso-pagination:",
    "2865:654": "none;mso-layout-grid-align:",
    "2865:655": "none;text-autospace:none“>",
    "2865:656": "normal;mso-pagination:",
    "2865:657": "none;mso-layout-grid-align:",
    "2865:658": "none;text-autospace:",
    "2865:659": "none“> trivajraṃ trividhaṃ rupaṃ cakṣurindriyasvabhāvena",
    "2865:660": "sametyālambayatīti trividhavajrasamayo vairocanaḥ|",
    "2865:661": "tasya cakṣurbhāvena dhyānena",
    "2865:662": "trivajravairocano mahāvajradharaḥ pūrvavat tatsamo bhavet|",
    "2865:663": "ityāha bhagavān",
    "2865:664": "vairocanavajraḥ|",
    "2865:665": "normal;mso-pagination:",
    "2865:666": "none;mso-layout-grid-align:",
    "2865:667": "none;text-autospace:none“>",
    "2865:668": "normal;mso-pagination:",
    "2865:669": "none;mso-layout-grid-align:",
    "2865:670": "none;text-autospace:",
    "2865:671": "none“> kāyetyādinānuśaṃsāmāha|",
    "2865:672": "evaṃ bhāvayati yaḥ",
    "2865:673": "sādhakaḥ sa kāyādivajreṇa vairocanasaprabhaḥ vairocanasamānatejāḥ jñānasvarupeṇa",
    "2865:674": "jñānamūrtitvena saṃbudhyate jñāyata iti jñānasaṃbodhiḥ trikāyabhedyaṃmahāvajradharapadaṃ",
    "2865:675": "tat sādhayatīti trikāyābhedyasādhakaḥ sa sādhako bhavet|",
    "2865:676": "normal;mso-pagination:",
    "2865:677": "none;mso-layout-grid-align:",
    "2865:678": "none;text-autospace:none“>",
    "2865:679": "normal;mso-pagination:",
    "2865:680": "none;mso-layout-grid-align:",
    "2865:681": "none;text-autospace:",
    "2865:682": "none“> kāyavākcittatvenālambyate gṛhyāta iti",
    "2865:683": "kāyavākcittālambanaṃ mahāvajradharupaṃ tasya cakṣurindriyasthāne sthitvā",
    "2865:684": "trividhaṃ rupaṃ saṃbudhyate jānātīti saṃbodhiḥ|",
    "2865:685": "sa evāpratihataprasaratvād",
    "2865:686": "vajraḥ tanniṣpādakasamādhirapi kāyavākcittālambanasaṃbodhivajro nāma|",
    "2865:687": "nāsandhyam|",
    "2865:688": "normal;mso-pagination:",
    "2865:689": "none;mso-layout-grid-align:",
    "2865:690": "none;text-autospace:none“>",
    "2865:691": "normal;mso-pagination:",
    "2865:692": "none;mso-layout-grid-align:",
    "2865:693": "none;text-autospace:",
    "2865:694": "none“> parvateṣvityādinā sādhadhanasthānamāha| parvateṣu",
    "2865:695": "phalapuṣpādyalaṅkṛteṣu giriśikhareṣu vivikteṣu janasaṃpātarahiteṣu nadīprasravaṇeṣu",
    "2865:696": "udyānādinikaṭapradeśeṣu śmaśānādipviti|",
    "2865:697": "ādiśabdādekavṛkṣaśūnyāgāradevatālayādyanyeṣvapi",
    "2865:698": "mano'nukuleṣu idamanantaroktaṃ dhyānasamuccayaṃ kṣitigatabhaṃdisamādhivṛndaṃ",
    "2865:699": "kārya karaṇīyam| neyārthaḥ|",
    "2865:700": "normal;mso-pagination:",
    "2865:701": "none;mso-layout-grid-align:",
    "2865:702": "none;text-autospace:none“>",
    "2865:703": "normal;mso-pagination:",
    "2865:704": "none;mso-layout-grid-align:",
    "2865:705": "none;text-autospace:",
    "2865:706": "none“> parvateṣu pīnastana jaghanādisamanviteṣu",
    "2865:707": "nārījaneṣu vivikteṣu kanyājaneṣu nadīprasravaṇesū sarvajanasādhāraṇeṣu",
    "2865:708": "veśyādistrījaneṣu śmaśānādiṣviti śmaśānavallokagarhiteṣu caṇḍālarajakādistrījaneṣvidaṃ",
    "2865:709": "dhyānasamuccayaṃ kāryamiti nītārthaḥ|",
    "2865:710": "normal;mso-pagination:",
    "2865:711": "none;mso-layout-grid-align:",
    "2865:712": "none;text-autospace:none“>",
    "2865:713": "normal;mso-pagination:",
    "2865:714": "none;mso-layout-grid-align:",
    "2865:715": "none;text-autospace:",
    "2865:716": "none“> evaṃsthānasampadamāsādya vairocananyāsena",
    "2865:717": "divyacakṣuḥsādhanamabhidhāya tathaivādhipatyādinyāsena",
    "2865:718": "divyaśrotrādisādhanamāha|",
    "2865:719": "akṣobhyetyādi|",
    "2865:720": "akṣobhyaniṣpādakaṃ jñānarmoṃkārabījaṃ",
    "2865:721": "tatparāvṛttyā saṃbhūtaṃ vajramakṣobhyaḥ akṣobhyajñānavajrādayo'kṣobhyatnasaṃbhavāmitābhāmoghasiddhayaḥ",
    "2865:722": "tān| pūrvavat|",
    "2865:723": "śrotrāyatanādiṣu prabhāsvarālambanapūrvakaṃ dhyātvā",
    "2865:724": "pañcābhijñāprayogeṇa mahāvajradharayogena sthāne kṣitigarbhadisthāne buddhāgrā",
    "2865:725": "vairocanādayaḥ teṣāṃ bhāvanā kāryā|",
    "2865:726": "ityāha bhagavān|",
    "2865:727": "mahāvajrāḥ sādhakāḥ teṣāṃ",
    "2865:728": "samayavajraḥ abhedyasamayaḥ tamupadeṣṭuṃ jānātīti mahāvajrasamayaḥ vajrābhijño",
    "2865:729": "mahāvajradharaḥ|",
    "2865:730": "yathārutam|",
    "2865:731": "normal;mso-pagination:",
    "2865:732": "none;mso-layout-grid-align:",
    "2865:733": "none;text-autospace:none“>",
    "2865:734": "normal;mso-pagination:",
    "2865:735": "none;mso-layout-grid-align:",
    "2865:736": "none;text-autospace:",
    "2865:737": "none“> utpattikrameṇa bījavinyāsapūrvakaṃ",
    "2865:738": "pañcābhijñāsādhanamupadiśya niṣpannakrameṇopakṣipannāha|",
    "2865:739": "pañcaśūlamityādi|",
    "2865:740": "pañcaśūlaṃ pañcendriyāṇi śūlavadviṣayeṣu nimajjanāt| tadeva",
    "2865:741": "mahāvajramavyāhataprasaratvāt|",
    "2865:742": "pañcajvālā udvāhādipañcaraśmayaḥ tairvibhūṣitaṃ",
    "2865:743": "maṇḍitaṃ spharaṇasaṃharaṇanirvartanāt|",
    "2865:744": "pañcasthānaṃ rupaśabdādikaṃ tasmin",
    "2865:745": "prayogeṇa prasaraṇena vajrābhijño mahāvajradharaḥ tatsamo bhavet|",
    "2865:746": "normal;mso-pagination:",
    "2865:747": "none;mso-layout-grid-align:",
    "2865:748": "none;text-autospace:none“>",
    "2865:749": "normal;mso-pagination:",
    "2865:750": "none;mso-layout-grid-align:",
    "2865:751": "none;text-autospace:",
    "2865:752": "none“> svamantraṃ praveśādisvabhavamakṣaratrayam",
    "2865:753": "anavarataṃ ghaṭiyantravat|",
    "2865:754": "aharniśaṃ pravartamānatvāt|",
    "2865:755": "cakraṃ sphuliṅgagahanākulaṃ",
    "2865:756": "pañcaraśmyātmakapañcavajrāṇi pañcākṣarāṇi teṣu prayogeṇa preraṇe",
    "2865:757": "vajrābhijñasamo bhavet|",
    "2865:758": "normal;mso-pagination:",
    "2865:759": "none;mso-layout-grid-align:",
    "2865:760": "none;text-autospace:none“>",
    "2865:761": "normal;mso-pagination:",
    "2865:762": "none;mso-layout-grid-align:",
    "2865:763": "none;text-autospace:",
    "2865:764": "none“> khavajraṃ svamahāmudrārupaṃ tanmadhyagataṃ",
    "2865:765": "sthitaṃ cakramindriyavṛdaṃ buddhā vairocanādayaḥ tadupalakṣitajvālā",
    "2865:766": "sitādiraśmayaḥ tatsamaprabhaṃ tatsamaprabhaṃ tatsamānavarṇa dhyātvā vijñāya",
    "2865:767": "buddhā",
    "2865:768": "normal;mso-pagination:",
    "2865:769": "none;mso-layout-grid-align:",
    "2865:770": "none;text-autospace:none“>",
    "2865:771": "normal;mso-pagination:",
    "2865:772": "none;mso-layout-grid-align:",
    "2865:773": "none;text-autospace:",
    "2865:774": "none“> rupādayo viṣayā [ ḥ ] teṣu praveśena samāyogena buddhāstvatra",
    "2865:775": "pañcaskandhāḥ teṣāmāśrayaḥ jñānamūrtirmahāvajradharaḥ tatsamo bhavediti|",
    "2865:776": "normal;mso-pagination:",
    "2865:777": "none;mso-layout-grid-align:",
    "2865:778": "none;text-autospace:none“>",
    "2865:779": "normal;mso-pagination:",
    "2865:780": "none;mso-layout-grid-align:",
    "2865:781": "none;text-autospace:",
    "2865:782": "none“> niṣpannakrameṇaiva samādhyantaramupakṣipannāha|",
    "2865:783": "buddhamaṇḍalamityādi|",
    "2865:784": "budhyata iti buddhaṃ kiṃ tat ?",
    "2865:785": "jñeyamaṇḍalaṃ svakāyam|",
    "2865:786": "traidhātukakāyamadhimucya vairocanaṃ kalpayet omkāraṃ hṛdaye dhyātveti|",
    "2865:787": "traidhātukasvabhāvakāyavajrahṛdaye omkāraṃ jñānasattva dhyātvā mantre",
    "2865:788": "jñānasattve vijñānabhāvanā vindvātmakasamādhisattvabhāvanā kartavyā|",
    "2865:789": "normal;mso-pagination:",
    "2865:790": "none;mso-layout-grid-align:",
    "2865:791": "none;text-autospace:none“>",
    "2865:792": "normal;mso-pagination:",
    "2865:793": "none;mso-layout-grid-align:",
    "2865:794": "none;text-autospace:",
    "2865:795": "none“> evamabhyasyato yoginaścittaṃ yadā",
    "2865:796": "nirodhamadhyagataṃ bindubhāvanāmapyapahāya yadā prabhāsvaraniṣṭhaṃ jāyate ,",
    "2865:797": "tadā sayogī cintāmaṇivat abhilaṣitārthaprapūrakaḥ",
    "2865:798": "saṃbhārādvayopetatvāt|",
    "2865:799": "śrīmān sarvabuddhāgro mahāvajradharastaṃ sādhayatīti",
    "2865:800": "sarvabuddhāgrasādhako bhavati|",
    "2865:801": "normal;mso-pagination:",
    "2865:802": "none;mso-layout-grid-align:",
    "2865:803": "none;text-autospace:none“>",
    "2865:804": "normal;mso-pagination:",
    "2865:805": "none;mso-layout-grid-align:",
    "2865:806": "none;text-autospace:",
    "2865:807": "none“> evaṃ svacittaṃ traidhātukacittasvabhāvaṃ akṣobhyaṃ",
    "2865:808": "prabhāvayet|",
    "2865:809": "tatastraidhātukasamayasattvahṛdaye hūṃkāraṃ jñānasattvaṃ dhyātvā",
    "2865:810": "cittaṃ bindugataṃ nyasediti samayasattvahṛdayasthajñānasattvākhyo bindugataṃ",
    "2865:811": "svacittaṃ samdhīsattvarupaṃ nyaset|",
    "2865:812": "normal;mso-pagination:",
    "2865:813": "none;mso-layout-grid-align:",
    "2865:814": "none;text-autospace:none“>",
    "2865:815": "normal;mso-pagination:",
    "2865:816": "none;mso-layout-grid-align:",
    "2865:817": "none;text-autospace:",
    "2865:818": "none“> svavāgvajraṃ tu pūrvavat traidhātukavāksvabhāvaṃ",
    "2865:819": "dhyātvā dhyātvā tadamitābhaṃ prabhāvayet|",
    "2865:820": "samayasattvasya hṛdaye āḥkāraṃ",
    "2865:821": "jñānasattvarupaṃ dhyātvā vajraṃ svacittaṃ samādhisattvagataṃ nyaset sthāpayet|",
    "2865:822": "normal;mso-pagination:",
    "2865:823": "none;mso-layout-grid-align:",
    "2865:824": "none;text-autospace:none“>",
    "2865:825": "normal;mso-pagination:",
    "2865:826": "none;mso-layout-grid-align:",
    "2865:827": "none;text-autospace:",
    "2865:828": "none“> idamityādinānanroktaṃ samādhitrayasyānuśāṃsāmupasaṃharati|",
    "2865:829": "samayāgramutpattikramabhāvanaṃ tasyāgraṃ samayāgrāgraṃ trivajraṃ",
    "2865:830": "sarvasattvakāyavākcittaṃ tena svakāyavākcittavajrasyābhedyatvena bhāvanaṃ",
    "2865:831": "trivajrābhedyatvena bhāvanaṃ nirodhasamayo dhāraṇaṃ tañjñāyate yena",
    "2865:832": "tannirodhasamayajñānaṃ buddhā rupādayo skandhāḥ teṣāṃ siddhiḥ prākṛtadehāpagamena",
    "2865:833": "audāryagāmbhīryātmakajñānadehaparigrahaḥ|",
    "2865:834": "tatsamāvahati prāpayatīti",
    "2865:835": "buddhasiddhisamāvaham|",
    "2865:836": "normal;mso-pagination:",
    "2865:837": "none;mso-layout-grid-align:",
    "2865:838": "none;text-autospace:none“>",
    "2865:839": "normal;mso-pagination:",
    "2865:840": "none;mso-layout-grid-align:",
    "2865:841": "none;text-autospace:",
    "2865:842": "none“> amumevārtha prakārāntareṇa dyotayannāha|",
    "2865:843": "khavajreṇetyādi|",
    "2865:844": "prabhāsvaraṃ tatra dhāryata iti khavajradhātuḥ traidhātukaṃ",
    "2865:845": "tatrasthaṃ bhāvayet|",
    "2865:846": "svacchamaṇḍalaṃ kāyavajraṃtraidhātukaṃ kāyavākcitte omkāraṃ",
    "2865:847": "jñānasattvaṃ dhyāyāt|",
    "2865:848": "traidhātukaṃ kāyavākcittopamardanena jñānakāyaṃ",
    "2865:849": "bhāvayediti yāvat|",
    "2865:850": "evaṃ dhyātvā kimityāha|",
    "2865:851": "kalpaṃ saṃtiṣṭhitīti",
    "2865:852": "sarvasattvamanorathasya kalpanaṃ saṃpādanaṃ kalpaḥ|",
    "2865:853": "tasmin tiṣṭhati āsaṃsāraṃ",
    "2865:854": "trikāyātmako bhūtvā sakalajagadabhipretārthasaṃpādanasamarthastiṣṭhatīti yāvat|",
    "2865:855": "samādhidvayamapyanenaiva vyākhyānena boddhavyam|",
    "2865:856": "normal;mso-pagination:",
    "2865:857": "none;mso-layout-grid-align:",
    "2865:858": "none;text-autospace:none“>",
    "2865:859": "normal;mso-pagination:",
    "2865:860": "none;mso-layout-grid-align:",
    "2865:861": "none;text-autospace:",
    "2865:862": "none“> trivajrakalpasamaya iti|",
    "2865:863": "kāyādivajraijaṃgadartha",
    "2865:864": "kalpayati saṃpādayatīti trivajrakalpasamayo mahāvajradharaḥ|",
    "2865:865": "yataḥ prabhṛtītyādyanuśaṃsā|",
    "2865:866": "imaṃ dvividhaṃ yogaṃ prāptabhiṣeko gurubhiranujñāto yataḥ prabhṛtyārabhya",
    "2865:867": "kāyavākcittavajriṇo mahāvajradharasya yaḥ paṭhe [ di ] ti yaḥparebhyaḥ upadiśet ,",
    "2865:868": "cintayediti yaḥ svayamabhyaset sa ca",
    "2865:869": "vajradharo bhavet|",
    "2865:870": "na kevalaṃ bhāvaka ityabhiprāyaḥ|",
    "2865:871": "normal;mso-pagination:",
    "2865:872": "none;mso-layout-grid-align:",
