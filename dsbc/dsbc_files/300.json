{
    "300:0": "4 arciṣmatī nāma caturthī bhūmiḥ |",
    "300:1": "upakramagāthāḥ |",
    "300:2": "evaṃ śrūṇitva caraṇaṃ vipulaṃ",
    "300:3": "bhūmyuttamaṃ manuramaṃ pravaram |",
    "300:4": "saṃharṣitā jinasutāttamanā",
    "300:5": "abhyokiranti kusumebhi jinam || 1 ||",
    "300:6": "saṃkampitā lavaṇatoyadharā",
    "300:7": "iha dharmadeśanamudīrayatām |",
    "300:8": "marukanyakā abhimanorucirāḥ",
    "300:9": "saṃgītiyukta varadharmaratāḥ || 2 ||",
    "300:10": "vaśavarti devapatirāttamanā",
    "300:11": "maṇiratna divya sugatasya kṣipī |",
    "300:12": "vācaṃ abhāṣi atha eva jino",
    "300:13": "utpanna artha guṇapāragato || 3 ||",
    "300:14": "kiṃ kāraṇaṃ tatha hi dharmavaraṃ",
    "300:15": "saṃbodhisattvacaraṇaṃ paramam |",
    "300:16": "bhūmirvidū na iyamadya śrutā",
    "300:17": "yasyāśravo durlabha kalpaśataiḥ || 4 ||",
    "300:18": "bhūyaḥ prabhāṣa naradevahitā",
    "300:19": "caryāvarāṃ jinasutān vidū |",
    "300:20": "śroṣyanti te marutasaṃghagaṇā",
    "300:21": "bhūtaṃ viniścayamananyapadam || 5 ||",
    "300:22": "vimukticandraḥ punarvīro ālapī sugatātmajam |",
    "300:23": "caturthī saṃkramantānāṃ gocaraṃ bhaṇa uttamam || 6 ||",
    "300:24": "upasaṃhāragāthāḥ |",
    "300:25": "parikarmitā tṛtīyabhūmiprabhaṃkarāya",
    "300:26": "sattvacaryaloka tatha dharma vicāryamāṇaḥ |",
    "300:27": "ākāśadhātu manadhātu trayaśca dhātu",
    "300:28": "adhimukti āśaya viśuddhi samākramanti || 7 ||",
    "300:29": "sahaprāptu arciṣmati bhūmi mahānubhāvaḥ",
    "300:30": "saṃvṛttu śāstu kulu bhūyu vivartiyatve |",
    "300:31": "abhedya buddharatane tatha dharmasaṃghe",
    "300:32": "udayavyayasthiti nirīhaka prekṣamāṇaḥ || 8 ||",
    "300:33": "lokapravṛtti kriyakarma bhavopapattiṃ",
    "300:34": "saṃsāranirvṛtivibhāvana kṣetrasattvān |",
    "300:35": "dharmāñca pūrvamaparānta kṣayānutpādaṃ",
    "300:36": "saṃvṛttu bhāvayati śāstu kulānuvartī || 9 ||",
    "300:37": "so eṣu dharmu samupetu hitānukampī",
    "300:38": "bhāveti kāyamapi vedana cittadharmān |",
    "300:39": "adhyātmabāhyubhayathā vidu bhāvayāti",
    "300:40": "smṛtyopasthānabhāvana niketavarjitā || 10 ||",
    "300:41": "pāpakṣayātkuśaladharmavivardhitā ca",
    "300:42": "samyakprahāṇa caturo vidu bhāvayanti |",
    "300:43": "catuṛddhipāda bala indriya bhāvayanti",
    "300:44": "bodhyaṅgaratna ruciraṃ tatha mārga śreṣṭham || 11 ||",
    "300:45": "bhāventi tān janayatāṃ samavekṣya buddhim",
    "300:46": "upastambhayanti praṇidhiṃ kṛtapūrvamaitrāḥ |",
    "300:47": "sarvajñajñānamabhiprārthana buddhakṣetraṃ",
    "300:48": "balaśreṣṭhamuttamapathaṃ anucintayantaḥ || 12 ||",
    "300:49": "vaiśāradaṃ api ca dharma ahārya śāstuḥ",
    "300:50": "varavuddhaghoṣamabhiprārthayamāna dhīrāḥ |",
    "300:51": "gambhīramārgaratanaṃ ca vimokṣasthānaṃ",
    "300:52": "mahatāmupāya samudāgama bhāvayanti || 13 ||",
    "300:53": "satkāyadṛṣṭivigatāśca dviṣaṣṭidṛṣṭī",
    "300:54": "attāttamīyavigatāstatha jīvalābham |",
    "300:55": "skandhāstu dvāra tatha dhātuniketasthānaṃ",
    "300:56": "sarvaprahāṇa viduṣaṃ catuthāya bhūmyām || 14 ||",
    "300:57": "so yānimāni sugatena vivarṇitāni",
    "300:58": "karmāṇi kleśasahajāni anarthakāni |",
    "300:59": "tāni prahāya vidu āśayato viśuddhā",
    "300:60": "dharmārabhanti kuśalaṃ jaga–tāyaṇārtham || 15 ||",
    "300:61": "susnigdhacitta bhavatī vidu apramatto",
    "300:62": "mṛducittu sārjava hitāsukhaāvahaśca |",
    "300:63": "aparikliṣṭaśca parimārgati uttamārthaṃ",
    "300:64": "jñānābhiṣekamabhilāṣi jagārthacārī || 16 ||",
    "300:65": "gurugauraveṣupagataḥ pratipattikāmo",
    "300:66": "bhavate kṛtajña sumanāśca akūhakāśca |",
    "300:67": "nirmāyatāgahana āśayasūrataśca",
    "300:68": "avivartyavīryu bhavate samudānayantaḥ || 17 ||",
    "300:69": "tasyātra bhūmi rucirāya pratiṣṭhitasya",
    "300:70": "adhyāśayaṃ api ca śuddhamupeti dharmam |",
    "300:71": "adhimukti tapyati vivardhati śukladharmo",
    "300:72": "malakalmaṣaṃ vimati śaṃśaya sarva yānti || 18 ||",
    "300:73": "atra sthitā naravararṣabha bodhisattvāḥ",
    "300:74": "sugatānanekanayutānabhipūjayanti |",
    "300:75": "śṛṇvanti dharma yatha śāsani pravrajanti",
    "300:76": "asaṃhārya śakya kṛtakāñcanabhūṣaṇaṃ vā || 19 ||",
    "300:77": "atra sthitāna vidunā guṇamāśayaṃ ca",
    "300:78": "jñānaṃ upāya caraṇaṃ ca viśuddhimārgaḥ |",
    "300:79": "no śakyu māranayutebhi nivartanāya",
    "300:80": "ratnaprabheva yatha varṣajalairahāryā || 20 ||",
    "300:81": "atra sthitā naramarudgaṇapūjanārhā",
    "300:82": "bhontī suyāmapatirīśvara dharmacārī |",
    "300:83": "sattvāni dṛṣṭigahanādvinivartayanti",
    "300:84": "saṃbhārayanti kuśalā jinajñānahetoḥ || 21 ||",
    "300:85": "viryopapeta śatakoṭi mararṣabhāṇāṃ",
    "300:86": "paśyantyananyamanasaḥ susamāhitatvāt |",
    "300:87": "tata uttariṃ bahukalpamabhinirharanti",
    "300:88": "jñānākarā praṇidhiśreṣṭha guṇārthacārī || 22 ||",
    "300:89": "caturthī itiyaṃ bhūmirviśuddhā śubhacāriṇī |",
    "300:90": "guṇārthajñānayuktānāṃ nirdiṣṭā sugatātmajāḥ || 23 ||"
}