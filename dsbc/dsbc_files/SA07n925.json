{
  "SA07n925:0": "CANTO XI",
  "SA07n925:1": "athaivamukto magadhādhipena",
  "SA07n925:2": "suhṛnmukhena pratikūlamartham |",
  "SA07n925:3": "svastho'vikāraḥ kulaśaucaśuddhaḥ",
  "SA07n925:4": "śauddhodanirvākyamidaṃ jagāda ||1 ||",
  "SA07n925:5": "nāścaryametadbhavato vidhānaṃ",
  "SA07n925:6": "jātasya haryaṅkakule viśāle |",
  "SA07n925:7": "yanmitrapakṣe tava mitrakāma",
  "SA07n925:8": "syādvṛttireṣā pariśuddhavṛtteḥ ||2 ||",
  "SA07n925:9": "asatsu maitrī svakulānuvṛttā",
  "SA07n925:10": "na tiṣṭhati śrīriva viklaveṣu |",
  "SA07n925:11": "pūrvaiḥ kṛtāṃ prītiparaṃparābhi-",
  "SA07n925:12": "stāmeva santastu vivardhayanti ||3 ||",
  "SA07n925:13": "ye cārthakṛccheṣu bhavanti loke",
  "SA07n925:14": "samānakāryāḥ suhṛdāṃ manuṣyāḥ |",
  "SA07n925:15": "mitrāṇiḥ tānīti paraimi buddhyā",
  "SA07n925:16": "svasthasya vṛddhiṣviha ko hi na syāt ||4 ||",
  "SA07n925:17": "evaṃ ca ye dravyamavāpya loke",
  "SA07n925:18": "mitreṣu dharme ca niyojayanti |",
  "SA07n925:19": "avāptasārāṇi dhanāni teṣāṃ",
  "SA07n925:20": "bhraṣṭāni nānte janayanti tāpam ||5 ||",
  "SA07n925:21": "suhṛttayā cāryatayā ca rājan",
  "SA07n925:22": "khalveṣa yo māṃ prati niścayaste |",
  "SA07n925:23": "atrānuneṣyāmi suhṛttayaiva",
  "SA07n925:24": "brūyāmahaṃ nottaramanyadatra ||6 ||",
  "SA07n925:25": "ahaṃ jarāmṛtyubhayaṃ viditvā",
  "SA07n925:26": "mumukṣayā dharmamimaṃ prapannaḥ |",
  "SA07n925:27": "bandhūn priyānaśrumukhānvihāya",
  "SA07n925:28": "prāgeva kāmānuśubhasya hetūn ||7 ||",
  "SA07n925:29": "nāśīviṣebhyo hi tathā bibhemi",
  "SA07n925:30": "naivāśanibhyo gaganāccyutebhyaḥ |",
  "SA07n925:31": "na pāvakebhyo'nilasaṃhitebhyo",
  "SA07n925:32": "yathā bhayaṃ me viṣayebhya eva ||8 ||",
  "SA07n925:33": "kāmā hyanityāḥ kuśalārthacaurā",
  "SA07n925:34": "riktāśca māyāsadṛśāśca loke |",
  "SA07n925:35": "āśāsyamānā api mohayanti",
  "SA07n925:36": "cittaṃ nṛṇāṃ kiṃ punarātmasaṃsthāḥ ||9 ||",
  "SA07n925:37": "kāmābhibhūtā hi na yānti śarma",
  "SA07n925:38": "tripiṣṭape kiṃ bata martyaloke |",
  "SA07n925:39": "kāmaiḥ satṛṣṇasya hi nāsti tṛpti-",
  "SA07n925:40": "ryathendhanairvātasakhasya vanheḥ ||10 ||",
  "SA07n925:41": "jagatyanartho na samo'sti kāmai-",
  "SA07n925:42": "rmohācca teṣveva janaḥ prasaktaḥ |",
  "SA07n925:43": "tattvaṃ viditvaivamanarthabhīruḥ",
  "SA07n925:44": "prājñaḥ svayaṃ ko'bhilaṣedanartham ||11 ||",
  "SA07n925:45": "samudravaktrāmapi gāmavāpya",
  "SA07n925:46": "pāraṃ jigīṣanti mahārṇavasya |",
  "SA07n925:47": "lokasya kāmairna vitṛptirasti",
  "SA07n925:48": "patidbhirambhobhirivārṇavasya ||12 ||",
  "SA07n925:49": "devena vṛṣṭe'pi hiraṇyavarṣe",
  "SA07n925:50": "dvīpānsamagrāṃścaturo'pi jitvā |",
  "SA07n925:51": "śakrasya cārdhāsanamapyavāpya",
  "SA07n925:52": "māndhāturāsīdviṣayeṣvatṛptiḥ ||13 ||",
  "SA07n925:53": "bhuktvāpi rājyaṃ divi devatānāṃ",
  "SA07n925:54": "śatakratau vṛtrabhayātpranaṣṭe |",
  "SA07n925:55": "darpānmaharṣīnapi vāhayitvā",
  "SA07n925:56": "kāmeṣvatṛpto nahuṣaḥ papāta ||14 ||",
  "SA07n925:57": "aiḍaśca rājā tridivaṃ vigāhya",
  "SA07n925:58": "nītvāpi devī vaśamurvaśī tām |",
  "SA07n925:59": "lobhādṛṣibhyaḥ kanakaṃ jihīrṣu-",
  "SA07n925:60": "rjagāma nāśaṃ viṣayeṣvatṛptaḥ ||15 ||",
  "SA07n925:61": "balermahendraṃ nahuṣaṃ mahendrā-",
  "SA07n925:62": "dindraṃ punarye nahuṣādupeyuḥ |",
  "SA07n925:63": "svarge kṣitau vā viṣayeṣu teṣu",
  "SA07n925:64": "ko viśvasedbhāgyakulākuleṣu ||16 ||",
  "SA07n925:65": "cīrāmbarā mūlaphalāmbubhakṣā",
  "SA07n925:66": "jaṭā vahanto'pi bhujaṅgadīrghāḥ |",
  "SA07n925:67": "yairnānyakāryā munayo'pi bhagnāḥ",
  "SA07n925:68": "kaḥ kāmasaṃjñānmṛgayeta śatrūn ||17 ||",
  "SA07n925:69": "ugrāyudhaścogradhṛtāyudho'pi",
  "SA07n925:70": "yeṣāṃ kṛte mṛtyumavāpa bhīṣmāt |",
  "SA07n925:71": "cintāpi teṣāmaśivā vadhāya",
  "SA07n925:72": "sadvṛttināṃ kiṃ punaravratānām ||18 ||",
  "SA07n925:73": "āsvādamalpaṃ viṣayeṣu matvā",
  "SA07n925:74": "saṃyojanotkarṣamatṛptimeva |",
  "SA07n925:75": "sadbhyaśca garhā niyataṃ ca pāpaṃ",
  "SA07n925:76": "kaḥ kāmasaṃjñaṃ viṣamādadīta ||19 ||",
  "SA07n925:77": "kṛṣyādibhiḥ karmabhirarditānāṃ",
  "SA07n925:78": "kāmātmakānāṃ ca niśamya duḥkham |",
  "SA07n925:79": "svāsthyaṃ ca kāmeṣvakutūhalānāṃ",
  "SA07n925:80": "kāmānvihātuṃ kṣamamātmavadbhiḥ ||20 ||",
  "SA07n925:81": "jñeyā vipatkāmini kāmasaṃpa-",
  "SA07n925:82": "tsiddheṣu kāmeṣu madaṃ hyupaiti |",
  "SA07n925:83": "madādakārya kurute na kārya",
  "SA07n925:84": "yena kṣato durgatimabhyupaiti ||21 ||",
  "SA07n925:85": "yatnena labdhvāḥ parirakṣitāśca",
  "SA07n925:86": "ye vipralabhya pratiyānti bhūyaḥ |",
  "SA07n925:87": "teṣvātmavānyācitakopameṣu",
  "SA07n925:88": "kāmeṣu vidvāniha ko rameta ||22 ||",
  "SA07n925:89": "anviṣya cādāya ca jātatarṣā",
  "SA07n925:90": "yānatyajantaḥ pariyānti duḥkham |",
  "SA07n925:91": "loke tṛṇolkāsadṛśeṣu teṣu",
  "SA07n925:92": "kāmeṣu kasyātmavato ratiḥ syāt ||23 ||",
  "SA07n925:93": "anātmavanto hṛdi yairvidaṣṭā",
  "SA07n925:94": "vināśamarchanti na yānti śarma |",
  "SA07n925:95": "kuddhograsarpapratimeṣu teṣu",
  "SA07n925:96": "kāmeṣu kasyātmavato ratiḥ syāt ||24 ||",
  "SA07n925:97": "asthi kṣudhārtā iva sārameyā",
  "SA07n925:98": "bhuktvāpi yānnaiva bhavanti tṛptāḥ |",
  "SA07n925:99": "jīrṇasthikaṅkālasameṣu teṣu",
  "SA07n925:100": "kāmeṣu kasyātmavato ratiḥ syāt ||25 ||",
  "SA07n925:101": "ye rājacaurodakapāvakebhyaḥ",
  "SA07n925:102": "sādhāraṇatvājjanayanti duḥkham |",
  "SA07n925:103": "teṣu praviddhāmiṣasanibheṣu",
  "SA07n925:104": "kāmeṣu kasyātmavato ratiḥ syāt ||26 ||",
  "SA07n925:105": "yatra sthitānāmabhito vipattiḥ",
  "SA07n925:106": "śatroḥ sakāśādapi bāndhavebhyaḥ |",
  "SA07n925:107": "hiṃsreṣu teṣvāyatanopameṣu",
  "SA07n925:108": "kāmeṣu kasyātmavato ratiḥ syāt ||27 ||",
  "SA07n925:109": "girau vane cāpsu ca sāgare ca",
  "SA07n925:110": "yān bhraṃśamarchanti vilaṅghamānāḥ |",
  "SA07n925:111": "teṣu drumaprāgraphalopameṣu",
  "SA07n925:112": "kāmeṣu kasyātmavato ratiḥ syāt ||28 ||",
  "SA07n925:113": "tīvraiḥ prayatnairvividhairavāptāḥ",
  "SA07n925:114": "kṣaṇena ye nāśamiha prayānti |",
  "SA07n925:115": "svapnopabhogapratimeṣu teṣu",
  "SA07n925:116": "kāmeṣu kasyātmavato ratiḥ syāt ||29 ||",
  "SA07n925:117": "yānarjayitvāpi na yānti śarma",
  "SA07n925:118": "vivardhayitvā paripālayitvā |",
  "SA07n925:119": "aṅgārakarṣūpratimeṣu teṣu",
  "SA07n925:120": "kāmeṣu kasyātmavato ratiḥ syāt ||30 ||",
  "SA07n925:121": "vināśamīyuḥ kuravo yadartha",
  "SA07n925:122": "vṛṣṇyandhakā mekhaladaṇḍakāśca |",
  "SA07n925:123": "sūnāsikāṣṭhapratimeṣu teṣu",
  "SA07n925:124": "kāmeṣu kasyātmavato ratiḥ syāt ||31 ||",
  "SA07n925:125": "sundopasundāvasurau yadartha-",
  "SA07n925:126": "manyonyavairaprasṛtau vinaṣṭau |",
  "SA07n925:127": "sauhārdīvaśleṣakareṣu teṣu",
  "SA07n925:128": "kāmeṣu kasyātmavato ratiḥ syāt ||32 ||",
  "SA07n925:129": "yeṣāṃ kṛte vāriṇi pāvake ca |",
  "SA07n925:130": "kravyātsu cātmānamihotsṛjanti |",
  "SA07n925:131": "sapatnabhūteṣvaśiveṣu teṣu",
  "SA07n925:132": "kāmeṣu kasyātmavato ratiḥ syāt ||33 ||",
  "SA07n925:133": "kāmārthamajñaḥ kṛpaṇaṃ karoti",
  "SA07n925:134": "prāpnoti duḥkhaṃ vadhabandhanādi |",
  "SA07n925:135": "kāmārthamāśākṛpaṇastapasvī",
  "SA07n925:136": "mṛtyuṃ śramaṃ cārchati jīvalokaḥ ||34 ||",
  "SA07n925:137": "gītairhiyante hi mṛgā vadhāya",
  "SA07n925:138": "rūpārthamagnau śalabhāḥ patanti |",
  "SA07n925:139": "matsyo giratyāyasamāmiṣārthī",
  "SA07n925:140": "tasmādanartha viṣayāḥ phalanti ||35 ||",
  "SA07n925:141": "kāmāstu bhogā iti yanmatiḥ syā-",
  "SA07n925:142": "dbhogā na kecitparigaṇyamānāḥ",
  "SA07n925:143": "vastrādayo dravyaguṇā hi loke",
  "SA07n925:144": "duḥkhapratīkāra iti pradhāryāḥ ||36 ||",
  "SA07n925:145": "iṣṭaṃ hi tarṣapraśamāya toyaṃ",
  "SA07n925:146": "kṣunnāśahetoraśanaṃ tathaiva |",
  "SA07n925:147": "vātātapāmbvāvaraṇāya veśma",
  "SA07n925:148": "kaupīnaśītāvaraṇāya vāsaḥ ||37 ||",
  "SA07n925:149": "nidrāvighātāya tathaiva śayyā",
  "SA07n925:150": "yānaṃ tathādhvaśramanāśanāya |",
  "SA07n925:151": "tathāsanaṃ sthānavinodanāya",
  "SA07n925:152": "snānaṃ mṛjarogyabalāśrayāya ||38 ||",
  "SA07n925:153": "duḥkhapratīkāranimittabhūtā-",
  "SA07n925:154": "stasmātprajānāṃ viṣayā na bhogāḥ |",
  "SA07n925:155": "aśnāmi bhogāniti ko'bhyupeyā-",
  "SA07n925:156": "tprājñaḥ pratīkāravidhau pravṛttaḥ ||39 ||",
  "SA07n925:157": "yaḥ pittadāhena vidahyamānaḥ",
  "SA07n925:158": "śītakriyāṃ bhoga iti vyavasyet |",
  "SA07n925:159": "duḥkhapratīkāravidhau pravṛttaḥ",
  "SA07n925:160": "kāmeṣu kuryātsa hi bhogasaṃjñām ||40 ||",
  "SA07n925:161": "kāmeṣvanaikāntikatā ca yasmā-",
  "SA07n925:162": "dato'pi me teṣu na bhogasaṃjñā |",
  "SA07n925:163": "ya eva bhāvā hi sukhaṃ diśanti",
  "SA07n925:164": "ta eva duḥkhaṃ punarāvahanti ||41 ||",
  "SA07n925:165": "gurūṇi vāsāṃsyagurūṇi caiva",
  "SA07n925:166": "sukhāya śīte hyusukhāya dharme |",
  "SA07n925:167": "candrāṃśavaścandanameva coṣṇe",
  "SA07n925:168": "sukhāya duḥkhāya bhavanti śīte ||42 ||",
  "SA07n925:169": "dvandvāni sarvasya yataḥ prasaktā-",
  "SA07n925:170": "nyalābhalābhaprabhṛtīni loke |",
  "SA07n925:171": "ato'pi naikāntasukho'sti kaści-",
  "SA07n925:172": "nnaikāntaduḥkha puruṣaḥ pṛthivyām ||43 ||",
  "SA07n925:173": "dṛṣṭvā vimiśrāṃ sukhaduḥkhatāṃ me",
  "SA07n925:174": "rājyaṃ ca dāsyaṃ ca mataṃ samānam |",
  "SA07n925:175": "nityaṃ hasatyeva hi naiva rājā",
  "SA07n925:176": "na cāpi saṃtapyata eva dāsaḥ ||44 ||",
  "SA07n925:177": "ājñā nṛpatve'bhyadhiketi yatsyā-",
  "SA07n925:178": "nmahānti duḥkhānyata eva rājñaḥ |",
  "SA07n925:179": "āsaṅgakāṣṭhapratimo hi rājā",
  "SA07n925:180": "lokasya hetoḥ parikhedameti ||45 ||",
  "SA07n925:181": "rājye nṛpastyāgini bavhamitre",
  "SA07n925:182": "viśvāsamāgacchati cedvipannaḥ |",
  "SA07n925:183": "athāpi viśrambhamupaiti neha",
  "SA07n925:184": "kiṃ nāma saukhyaṃ cakitasya rājñaḥ ||46 ||",
  "SA07n925:185": "yadā ca jitvāpi mahīṃ samagrāṃ",
  "SA07n925:186": "vāsāya dṛṣṭaṃ puramekameva |",
  "SA07n925:187": "tatrāpi caikaṃ bhavanaṃ niṣevyaṃ",
  "SA07n925:188": "śramaḥ parārthe nanu rājabhāvaḥ ||47 ||",
  "SA07n925:189": "rājño'pi vāsoyugamekameva",
  "SA07n925:190": "kṣutsaṃnirodhāya tathānnamātrā |",
  "SA07n925:191": "śayyā tathaikāsanamekameva",
  "SA07n925:192": "śeṣā viśeṣā nṛpatermadāya ||48 ||",
  "SA07n925:193": "tuṣṭyarthametacca phalaṃ yadīṣṭa-",
  "SA07n925:194": "mṛte'pi rājyānmama tuṣṭirasti |",
  "SA07n925:195": "tuṣṭau ca satyāṃ puruṣasya loke",
  "SA07n925:196": "sarve viśeṣā nanu nirviśeṣāḥ ||49 ||",
  "SA07n925:197": "tannāsmi kāmān prati saṃpratāryaḥ",
  "SA07n925:198": "kṣemaṃ śivaṃ mārgamanuprapannaḥ |",
  "SA07n925:199": "smṛtvā suhṛttvaṃ tu punaḥ punarmā",
  "SA07n925:200": "brūhi pratijñāṃ khalu pālayeti ||50 ||",
  "SA07n925:201": "na hyasmyamarṣeṇa vanaṃ praviṣṭo",
  "SA07n925:202": "na śatrubāṇairavadhūtamauliḥ |",
  "SA07n925:203": "kṛtaspṛho nāpi phalādhikebhyo",
  "SA07n925:204": "gṛhṇāmi naitadvacanaṃ yataste ||51 ||",
  "SA07n925:205": "yo dandaśūkaṃ kupitaṃ bhujaṅgaṃ",
  "SA07n925:206": "muktvā vyavasyeddhi punargrahītum |",
  "SA07n925:207": "dāhātmikāṃ vā jvalitāṃ tṛṇolkāṃ",
  "SA07n925:208": "saṃtyajya kāmānsa punarbhajeta ||52 ||",
  "SA07n925:209": "andhāya yaśca spṛhayedanandho",
  "SA07n925:210": "baddhāya mukto vidhanāya cāḍhyaḥ |",
  "SA07n925:211": "unmattacittāya ca kalyacittaḥ",
  "SA07n925:212": "spṛhāṃ sa kuryādviṣayātmakāya ||53 ||",
  "SA07n925:213": "bhaikṣopabhogīti ca nānukampyaḥ",
  "SA07n925:214": "kṛtī jarāmṛtyubhayaṃ titīrṣuḥ |",
  "SA07n925:215": "ihottamaṃ śāntisukhaṃ ca yasya",
  "SA07n925:216": "paratra duḥkhāni ca saṃvṛtāni ||54 ||",
  "SA07n925:217": "lakṣmyāṃ mahatyāmapi vartamāna-",
  "SA07n925:218": "stṛṣṇābhibhūtastvanukampitavyaḥ |",
  "SA07n925:219": "prāpnoti yaḥ śāntisukhaṃ na ceha",
  "SA07n925:220": "paratra duḥkhai pratigṛhyate ca ||55 ||",
  "SA07n925:221": "evaṃ tu vaktuṃ bhavato'nurūpaṃ",
  "SA07n925:222": "sattvasya vṛttasya kulasya caiva |",
  "SA07n925:223": "mamāpi voḍhuṃ sadṛśaṃ pratijñāṃ",
  "SA07n925:224": "sattvasya vṛttasya kulasya caiva ||56 ||",
  "SA07n925:225": "ahaṃ hi saṃsāraśareṇa viddho",
  "SA07n925:226": "viniḥsṛtaḥ śāntimavāptukāmaḥ |",
  "SA07n925:227": "neccheyamāptuṃ tridive'pi rājyaṃ",
  "SA07n925:228": "nirāmayaṃ kiṃ bata mānuṣeṣu ||57 ||",
  "SA07n925:229": "trivargasevāṃ nṛpa yattu kṛtsnataḥ",
  "SA07n925:230": "paro manuṣyārtha iti tvamāttha mām |",
  "SA07n925:231": "anartha ityeva mamātra darśanaṃ",
  "SA07n925:232": "kṣayī trivargo hi na cāpi tarpakaḥ ||58 ||",
  "SA07n925:233": "pade tu yasminna jarā na bhīrna rūṅ",
  "SA07n925:234": "na janma naivoparamo na cādhayaḥ |",
  "SA07n925:235": "tameva manye puruṣārthamuttamaṃ",
  "SA07n925:236": "na vidyate yatra punaḥ punaḥ kriyā ||59 ||",
  "SA07n925:237": "yadapyavoca paripālyatāṃ jarā",
  "SA07n925:238": "nava vayo gacchati vikriyāmiti |",
  "SA07n925:239": "aniścayo'ya capalaṃ hi dṛśyate",
  "SA07n925:240": "jarāpyadhīrā dhṛtimacca yauvanam ||60 ||",
  "SA07n925:241": "svakarmadakṣaśca yadāntako jagad",
  "SA07n925:242": "vayasu sarveṣvavaśa vikarṣati |",
  "SA07n925:243": "vināśakāle kathamavyavasthite",
  "SA07n925:244": "jarā pratīkṣyā viduṣā śamepsunā ||61 ||",
  "SA07n925:245": "jarāyudho vyādhivikīrṇasāyako",
  "SA07n925:246": "yadāntako vyādha ivāśivaḥ sthitaḥ |",
  "SA07n925:247": "prajāmṛgān bhāgyavanāśritāṃstudan",
  "SA07n925:248": "vayaḥprakarṣa prati ko manorathaḥ ||62 ||",
  "SA07n925:249": "ato yuvā vā sthaviro'thavā śiśu-",
  "SA07n925:250": "stathā tvarāvāniha kartumarhati |",
  "SA07n925:251": "yathā bhaveddharmavataḥ kṛtātmanaḥ",
  "SA07n925:252": "pravṛttiriṣṭā vinivṛttireva vā ||63 ||",
  "SA07n925:253": "yadāttha cāpīṣṭaphalāṃ kulocitāṃ",
  "SA07n925:254": "kuruṣva dharmāya makhakriyāmiti |",
  "SA07n925:255": "namo makhebhyo na hi kāmaye sukhaṃ",
  "SA07n925:256": "parasya duḥkhakriyayā yadiṣyate ||64 ||",
  "SA07n925:257": "paraṃ hi hantuṃ vivaśaṃ phalepsayā",
  "SA07n925:258": "na yuktarūpa karuṇātmanaḥ sataḥ |",
  "SA07n925:259": "kratoḥ phalaṃ yadyapi śāśvataṃ bhave-",
  "SA07n925:260": "ttathāpi kṛttvā kimu yatkṣayātmakam ||65 ||",
  "SA07n925:261": "bhavecca dharmo yadi nāparo vidhi-",
  "SA07n925:262": "rvratena śīlena manaḥśamena vā |",
  "SA07n925:263": "tathāpi naivārhati sevituṃ kratuṃ",
  "SA07n925:264": "viśasya yasmin paramucyate phalam ||66 ||",
  "SA07n925:265": "ihāpi tāvatpuruṣasya tiṣṭhataḥ",
  "SA07n925:266": "pravartate yatparahiṃsayā sukham |",
  "SA07n925:267": "tadapyaniṣṭaṃ saghṛṇasya dhīmato",
  "SA07n925:268": "bhavāntare kiṃ bata yanna dṛśyate ||67 ||",
  "SA07n925:269": "na ca pratāryo'smi phalapravṛttaye",
  "SA07n925:270": "bhaveṣu rājan ramate na me manaḥ |",
  "SA07n925:271": "latā ivāmbhodharavṛṣṭitāḍitāḥ",
  "SA07n925:272": "pravṛttayaḥ sarvagatā hi cañcalāḥ ||68 ||",
  "SA07n925:273": "ihāgataścahamito didṛkṣayā",
  "SA07n925:274": "munerarāḍasya vimokṣavādinaḥ |",
  "SA07n925:275": "prayāmi cādyaiva nṛpāstu te śivaṃ",
  "SA07n925:276": "vacaḥ kṣamethā mama tattvaniṣṭhuram ||69 ||",
  "SA07n925:277": "avendravaddivyava śaśvadarkavad",
  "SA07n925:278": "guṇairava śreya ihāva gāmava |",
  "SA07n925:279": "avāyurāryairava satsutānava",
  "SA07n925:280": "śriyaśca rājannava dharmamātmanaḥ ||70 ||",
  "SA07n925:281": "himāriketūdbhavasaṃbhavāntare",
  "SA07n925:282": "yathā dvijo yāti vimokṣayaṃstanum |",
  "SA07n925:283": "himāriśatrukṣayaśatrughātane",
  "SA07n925:284": "tathāntare yāhi vimokṣayanmanaḥ ||71 ||",
  "SA07n925:285": "nṛpo'bravītsāñjalirāgataspṛho",
  "SA07n925:286": "yatheṣṭamāpnotu bhavānavighnataḥ |",
  "SA07n925:287": "avāpya kāle kṛtakṛtyatāmimāṃ",
  "SA07n925:288": "mamāpi kāryo bhavatā tvanugrahaḥ ||72 ||",
  "SA07n925:289": "sthiraṃ pratijñāya tatheti pārthive",
  "SA07n925:290": "tataḥ sa vaiśvaṃtaramāśramaṃ yayau |",
  "SA07n925:291": "parivrajantaṃ tamudīkṣya vismito",
  "SA07n925:292": "nṛpo'pi vavrāja puri girivrajam ||73 ||",
  "SA07n925:293": "iti buddhacarite mahākāvye",
  "SA07n925:294": "kāmavigarhaṇo nāmaikādaśa sargaḥ ||11 ||"
}