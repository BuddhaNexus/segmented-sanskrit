{
    "1188:0": "pāramitāsamāsaḥ",
    "1188:1": "1. dānapāramitāsamāsaḥ",
    "1188:2": "namo buddhāya||",
    "1188:3": "tathāgatānāṃ padam āruru-",
    "1188:4": "kṣurāśritya ratnatrayam ādareṇa|",
    "1188:5": "bodhau nidhāyāvicalaṃ manaśca",
    "1188:6": "kuryāt parātmavyatihāram ādau || 1 ||",
    "1188:7": "tataḥ paraṃ dānavidhau prayogaḥ",
    "1188:8": "kāryastathā lokahitonmukhena|",
    "1188:9": "yathā svagātrāṇyapi yācitasya",
    "1188:10": "na yogasaṃkocavirūpatā syāt || 2 ||",
    "1188:11": "mātsaryadoṣopacayāya yat syān",
    "1188:12": "na tyāgacittaṃ paribṛṃhayed vā|",
    "1188:13": "tattyaktumevārhati bodhisattvaḥ",
    "1188:14": "parigrahacchadmamayaṃ vighātam || 3 ||",
    "1188:15": "tad bodhisattvaḥ katham ādadīta",
    "1188:16": "ratnaṃ dhanaṃ vā divi vāpi rājyam|",
    "1188:17": "yat tyāgacittapratipakṣadakṣaṃ",
    "1188:18": "saṃbodhimārgāvaraṇaṃ karoti || 4 ||",
    "1188:19": "saṃsmṛtya caryātiśayaṃ munīnāṃ",
    "1188:20": "tadunmukhīṃ svāmapi ca pratijñām|",
    "1188:21": "parigrahasnehavinigrahārthaṃ",
    "1188:22": "kuryād imāṃścetasi sadvitarkān || 5 ||",
    "1188:23": "yadā nisṛṣṭo jagate mayāyaṃ",
    "1188:24": "kāyo'pī tattyāgakṛto'pi dharmaḥ|",
    "1188:25": "bāhye tadā vastuni saṅgacittaṃ",
    "1188:26": "na me gajasnānam ivānurūpam || 6 ||",
    "1188:27": "māṃsārthino māṃsamidaṃ harantu",
    "1188:28": "majjānamapyuddharaṇāt tadarthī|",
    "1188:29": "ahaṃ hi lokārthamidaṃ bibharmi",
    "1188:30": "śarīrakaṃ kiṃ bata vastu bāhyam || 7 ||",
    "1188:31": "yathaiva bhaiṣajyamahīruhasya",
    "1188:32": "tvakpattrapuṣpādi janā haranti|",
    "1188:33": "madīyamete'paharanti ceti",
    "1188:34": "naivaṃ vikalpāḥ samudācaranti || 8 ||",
    "1188:35": "tathaiva lokārthasamudyatena",
    "1188:36": "svalpo'pi kāryo na mayā vikalpaḥ|",
    "1188:37": "duḥkhe kṛtaghne satatāśucau ca",
    "1188:38": "dehe parasmāyupayujyamāne || 9 ||",
    "1188:39": "ādhyātmike caiva mahījalādye",
    "1188:40": "bāhye mahābhūtagaṇe ca tulye|",
    "1188:41": "idaṃ mamedaṃ na mameti ko'yam",
    "1188:42": "ajñānapaṅkāṅkavidhirmayāpi || 10 ||",
    "1188:43": "gṛhṇīta gātrāṇyapi me yatheṣṭaṃ",
    "1188:44": "mā kārṣurasmin parakīyabuddhim|",
    "1188:45": "yuṣmākameva svamidaṃ kimarthaṃ",
    "1188:46": "nātmābhimāno mama kaścidatra || 11 ||",
    "1188:47": "ityadbhutā yasya bhavantyabhīkṣṇaṃ",
    "1188:48": "saṃbuddhabhāvānuguṇā vitarkāḥ|",
    "1188:49": "taṃ bodhisattvātiśayaṃ vadanti",
    "1188:50": "buddhā mahāsattvamacintyasattvāḥ || 12 ||",
    "1188:51": "evaṃ sa dānapratipattiśūraḥ",
    "1188:52": "karoti kāye'pi na jātvapekṣām|",
    "1188:53": "tasyāprayatnādupayānti śuddhiṃ",
    "1188:54": "karmāṇi vākkāyamanomayāni || 13 ||",
    "1188:55": "viśuddhakarmā ca hitaṃ pareṣām",
    "1188:56": "āyāsaduḥkhena vinā karoti|",
    "1188:57": "itthaṃ sa sattvārthamabhiprayatno",
    "1188:58": "nayānaye kauśalamabhyupaiti || 14 ||",
    "1188:59": "bhūyastaraṃ prāpya balaṃ sa dānāt",
    "1188:60": "saddharmadānena tataḥ karoti|",
    "1188:61": "bhavāndhakāre bhramatāṃ janānāṃ",
    "1188:62": "sūryodayāt spaṣṭataraṃ prakāśam || 15 ||",
    "1188:63": "sādhāraṇī lokahitārthasiddhiḥ",
    "1188:64": "sarvajñabhāvābhyudayapratiṣṭhā|",
    "1188:65": "ato'sya puṇyākṣayatābhyudeti",
    "1188:66": "prabheva bhānorudayasthitasya || 16 ||",
    "1188:67": "ityadbhutā dānamayā guṇaughā",
    "1188:68": "ye bodhisattvābharaṇībhavanti|",
    "1188:69": "tasmāt tadīyaṃ parikarma cittaṃ",
    "1188:70": "dānasya kāruṇyapuraḥsarasya || 17 ||",
    "1188:71": "āyuḥpratībhānabalādi bauddhaṃ",
    "1188:72": "niṣpādayeyaṃ jagatāmanena|",
    "1188:73": "sattvā mayā cāmiṣasaṃgṛhītāḥ",
    "1188:74": "saddharmapātrāṇyapi me bhaveyuḥ || 18 ||",
    "1188:75": "ityannadānaṃ pradadāti vidvān",
    "1188:76": "na svargasaṃpattiparigrahāya|",
    "1188:77": "pānānyapi kleśatṛṣaḥ śamāya",
    "1188:78": "lokasya lokārthacaro dadāti || 19 ||",
    "1188:79": "bauddhasya caivarddhiviceṣṭitasya",
    "1188:80": "nirvāṇasaukhyasya ca sarvalokaḥ|",
    "1188:81": "lābhī kathaṃ syāditi lokanātho",
    "1188:82": "yānaṃ mahāyānaratirdadāti || 20 ||",
    "1188:83": "saṃbuddhavarṇasya ca hemabhāso",
    "1188:84": "lajjāmayasyaiva ca bhūṣaṇasya|",
    "1188:85": "niṣpattaye vastravidhīnudārān",
    "1188:86": "satkṛtya kālānuguṇaṃ dadāti || 21 ||",
    "1188:87": "saṃbodhimaṇḍāsanam āsanāni",
    "1188:88": "śayyāśca śayyātrayam īkṣamāṇaḥ|",
    "1188:89": "sarvajñacakṣuḥpratilabdhaye ca",
    "1188:90": "caityeṣu rathyāsu ca dīpamālām || 22 ||",
    "1188:91": "vādyāni divyaśrutisaṃgrahārthaṃ",
    "1188:92": "saṃbuddhaśīlāya ca gandhadānam|",
    "1188:93": "sabhāprapārāmavihāragehāñ",
    "1188:94": "śaraṇyabhāvābhimukho dadāti || 23 ||",
    "1188:95": "dānaṃ rasānāṃ tu susaṃskṛtāṇāṃ",
    "1188:96": "rasārasāgratvaparigrahāya|",
    "1188:97": "bhaiṣajyadānānyajarāmaratvaṃ",
    "1188:98": "lokān imān prāpayituṃ dadāti || 24 ||",
    "1188:99": "bhujiṣyatāmātmasamaṃ ninīṣurdāśī-",
    "1188:100": "kṛtān kleśagaṇena lokān|",
    "1188:101": "sa dāsadāsyādi sadā dadāti",
    "1188:102": "dāsānudāsānaparākariṣyan || 25 ||",
    "1188:103": "dadāti putrān duhitṛḥ priyāśca",
    "1188:104": "bodhipriyatvādanavadyadānam|",
    "1188:105": "ekāntasaddharmaratipriyaśca",
    "1188:106": "krīḍāviśeṣān ratihetubhūtān || 26 ||",
    "1188:107": "suvarṇamuktāmaṇividrumādīn",
    "1188:108": "dadāti sallakṣaṇasaṃpadartham|",
    "1188:109": "ratnapradīptāni ca bhūṣaṇāni",
    "1188:110": "citrāṇyanuvyañjanasauṣṭhavāya || 27 ||",
    "1188:111": "dhyānārthamudyānatapovanāni",
    "1188:112": "saddharmakoṣāya ca vittakoṣam|",
    "1188:113": "munīndrarājyāya dadātyakhinno",
    "1188:114": "rājyāni cājñāpanamaṇḍitāni || 28 ||",
    "1188:115": "cakrāṅkitābhyāṃ caraṇottamābhyām",
    "1188:116": "saṃbodhimaṇḍākramaṇotsukatvāt|",
    "1188:117": "sa nirvikāraścaraṇapradānaṃ",
    "1188:118": "lokārthaniṣpattikaro dadāti || 29 ||",
    "1188:119": "duḥkhāpagāyāmatiśīghragāyāṃ",
    "1188:120": "magnasya lokasya kathaṃ na dadyām|",
    "1188:121": "saddharmahastāniti saṃpradatte",
    "1188:122": "hastānvikoṣāmburuhaprakāśān || 30 ||",
    "1188:123": "śraddhendriyādipratipūraṇārthaṃ",
    "1188:124": "sa karṇanāsādi dadātyakhinnaḥ|",
    "1188:125": "cakṣuśca cakṣurvimalīkariṣyaṃ-",
    "1188:126": "llokasya sarvāvaraṇaprahāṇāt || 31 ||",
    "1188:127": "utkṛtya māṃsāni saśoṇitāni",
    "1188:128": "dadāti kāruṇyavaśena nāthaḥ|",
    "1188:129": "bhūmyagnivāyvambuvadeva me syāllo-",
    "1188:130": "kopajīvyaḥ katham eṣa kāyaḥ || 32 ||",
    "1188:131": "lokottamajñānasamāpanārthaṃ",
    "1188:132": "sa uttamāṅgairapi satkaroti|",
    "1188:133": "abhyāgatasyārthijanasya yācñāṃ",
    "1188:134": "prāgeva dehāvayavaistadanyaiḥ || 33 ||",
    "1188:135": "majjānamapyadbhutavīraceṣṭo",
    "1188:136": "dadāti lokasya kathaṃ na kuryām|",
    "1188:137": "tathāgataṃ vigrahamapradhṛṣyaṃ",
    "1188:138": "vṛṣṭyāpi vajrojjvalayā patantyā || 34 ||",
    "1188:139": "ityevamādyaṃ satatānavadyaṃ",
    "1188:140": "tadbodhisattvāmbudharapramuktam|",
    "1188:141": "prahlādya dānāmbu jagatsamagraṃ",
    "1188:142": "sarvajñatāsāgaramabhyupaiti || 35 ||",
    "1188:143": "anviṣya bhogānviṣameṇa nāsau",
    "1188:144": "dadāti notpīḍanayā parasya|",
    "1188:145": "na trāsalajjāpratikārahetorna",
    "1188:146": "dakṣinīyān parimārgamāṇaḥ || 36 ||",
    "1188:147": "na ca praṇīte sati rūkṣadānam",
    "1188:148": "adakṣiṇīyā iti vāvamanya|",
    "1188:149": "vipākakāṅkṣākṛpaṇīkṛtaṃ vā",
    "1188:150": "satkārahīnaṃ vijugupsitaṃ vā || 37 ||",
    "1188:151": "naivonnatiṃ śīlavate prayacchan",
    "1188:152": "viparyayaṃ gacchati netarasmai|",
    "1188:153": "nātmānamutkarṣati naiva nindāṃ",
    "1188:154": "karoti so'nyasya samaprayogaḥ || 38 ||",
    "1188:155": "na cāsya mithyāśayadānamasti",
    "1188:156": "naivāstyanadhyāśayadānamasya|",
    "1188:157": "na krodhadoṣopahataṃ dadāti",
    "1188:158": "naivānutāpaṃ kurute sa dattvā || 39 ||",
    "1188:159": "na ślāghyamāno vipulaṃ dadāti",
    "1188:160": "nāślāghyamāno'nyataraṃ dadāti|",
    "1188:161": "na yācakānāmupaghātadānaṃ",
    "1188:162": "yad vā bhaved vipratipattihetuḥ || 40 ||",
    "1188:163": "nākāladānaṃ sa dadāti kiṃcid",
    "1188:164": "dadāti kāle viṣame'pi naiva|",
    "1188:165": "na devabhāvāya na rājyahetorna",
    "1188:166": "hīnayānaspṛhayālubhāvāt || 41 ||",
    "1188:167": "nāsau mukhollokanayā dadāti",
    "1188:168": "na kīrtiśabdāya na hāsyahetoḥ|",
    "1188:169": "paryāptametacca mameti naivaṃ",
    "1188:170": "yadvā vihiṃsāhasitaṃ pareṣām || 42 ||",
    "1188:171": "sarvajñabhāvāpariṇāmitaṃ vā",
    "1188:172": "sagarhitaṃ vā sa dadāti naiva|",
    "1188:173": "tato'sya tat pāramitābhidhānaṃ",
    "1188:174": "parāṃ viśuddhiṃ samupaiti dānam || 43 ||",
    "1188:175": "dānodbhavaṃ tasya ca puṇyarāśiṃ",
    "1188:176": "lokāt samagrādapi piṇḍitāni|",
    "1188:177": "puṇyāni naivābhibhavanti yasmāllo-",
    "1188:178": "kottamattvaṃ sa tato'bhyupaiti || 44 ||",
    "1188:179": "pañcasvabhijñāsu viniścitātmā",
    "1188:180": "lokāya yadvarṣati dānavarṣam|",
    "1188:181": "samantatastasya kutaḥ pramāṇaṃ",
    "1188:182": "parikṣayo vā satatapravṛtteḥ || 45 ||",
    "1188:183": "yadakṣayāṇāṃ jagatāṃ hitāya",
    "1188:184": "jñānasya hetuśca yadakṣayasya|",
    "1188:185": "traidhātukena kṣayiṇā na tacca",
    "1188:186": "saṃlipyate vyomavadambudena || 46 ||",
    "1188:187": "tacchūnyatākārasamāhitaṃ ca",
    "1188:188": "nimittadoṣaiḥ parivarjitaṃ ca|",
    "1188:189": "akiṃcanakleśaviyogasiddheste-",
    "1188:190": "nākṣayaṃ tatkathitaṃ munīndraiḥ || 47 ||",
    "1188:191": "asmin punaḥ satpuruṣāvadāne",
    "1188:192": "dāne nidāne sukhavistārāṇām|",
    "1188:193": "cikīrṣatā yogamanityasaṃjñā",
    "1188:194": "bhogeṣu kāryā karuṇā ca loke || 48 ||",
    "1188:195": "bhogānanityānabhivīkṣamānaḥ",
    "1188:196": "sātmyaṃ gatāyāṃ ca tataḥ kṛpāyām|",
    "1188:197": "sa niścayaṃ gacchati dīyate yad",
    "1188:198": "etān madīyāṃ na tu yadgṛhe me || 49 ||",
    "1188:199": "yaddattam asmān na bhayaṃ kadā cid",
    "1188:200": "gehe yadasmādbhayamabhyupaiti|",
    "1188:201": "sādhāraṇaṃ rakṣyamatarpakaṃ ca",
    "1188:202": "datte tu naite prabhavantyanarthāḥ || 50 ||",
    "1188:203": "sukhaṃ paratrāpi karoti dattam",
    "1188:204": "ihaiva duḥkhaṃ prakarotyadattam|",
    "1188:205": "ulkāsvabhāvaṃ hi dhanaṃ narāṇām",
    "1188:206": "atyajyamānaṃ vyasanaṃ dadāti || 51 ||",
    "1188:207": "adīyamānaṃ nidhanaṃ prayāti",
    "1188:208": "nidhānatāṃ yāti hi dīyamānam|",
    "1188:209": "dhanasya niḥsāralaghoḥ sa sāro",
    "1188:210": "yaddīyate lokahitonmukhena || 52 ||",
    "1188:211": "yaddattametadviduṣāṃ praśasyaṃ",
    "1188:212": "bālo janastannicayapraśaṃsī|",
    "1188:213": "prāyo viyogo hi parigrahebhyo",
    "1188:214": "dānādbhavatyabhyudayo yaśaśca || 53 ||",
    "1188:215": "dattaṃ na tatkleśaparigrahāya",
    "1188:216": "kleśāya mātsaryamanāryadharmaḥ|",
    "1188:217": "yaddīyate satpatha eṣa tasmād",
    "1188:218": "ato'nyathā kāpathamāhurāryāḥ || 54 ||",
    "1188:219": "abhyāgate yācanake ca tena",
    "1188:220": "saṃbodhisaṃbhāravivṛddhihetau|",
    "1188:221": "tatpreṣyasaṃjñātmani saṃniveśyā",
    "1188:222": "kalyāṇamitrapriyatā ca tasmin || 55 ||",
    "1188:223": "mahātmanāṃ yatpratanūbhavanti",
    "1188:224": "rāgādayo yācanakānniśamya|",
    "1188:225": "tenotsavābhyāgamamapyatītya",
    "1188:226": "teṣāṃ priyaṃ yācanakopayānam || 56 ||",
    "1188:227": "sa cetpunaryācanake'pi labdhe",
    "1188:228": "dātuṃ na śaknotyatidurbalatvāt|",
    "1188:229": "tenānuneyo madhureṇa sāmnā",
    "1188:230": "sa yācakaḥ syānna yathā samanyuḥ || 57 ||",
    "1188:231": "kāryaśca mātsaryavinigrahāya",
    "1188:232": "mohaprahāṇāya ca tena yatnaḥ|",
    "1188:233": "tathā yathā yācanakaḥ kadā cid",
    "1188:234": "vaimukhyadīno na tato vyāpaiti || 58 ||",
    "1188:235": "saṃbodhicittaṃ kuta eva tasya",
    "1188:236": "dravye'pi yo matsaramabhyupaiti|",
    "1188:237": "vāsaḥ sucittasya hi nāsti doṣairambho-",
    "1188:238": "nidhānasya śavairyathaiva || 59 ||",
    "1188:239": "tasmāt tyaktvā sarvataḥ sarvadoṣān",
    "1188:240": "bodhiprārthī sarvadā sarvadaḥ syāt|",
    "1188:241": "trātuṃ lokānekavīraḥ kva cittaṃ",
    "1188:242": "ceṣṭā dainyānūrjiteyaṃ kva caiva || 60 ||",
    "1188:243": "mūlaṃ dānasyāsya saṃbodhicittaṃ",
    "1188:244": "tanna tyājyaṃ ditsatā dānamīdṛk|",
    "1188:245": "taṃ saṃbuddhāstyāgināmagramāhuryo",
    "1188:246": "lokeṣu tyāgamādhitsuragram || 61 ||",
    "1188:247": "|| dānapāramitāsamāsaḥ ||"
}