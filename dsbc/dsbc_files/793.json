{
    "793:0": "ācārya nāgārjunapādaviracitam",
    "793:1": "āryadharmadhātugarbhavivaraṇam",
    "793:2": "bhāratīyabhāṣāyām-āryadharmadhātugarbhavivaraṇam|",
    "793:3": "bhoṭabhāṣāyām-phag-pā-chos-kyi-yiṅ-kyi-ñiṅ-poī-nama-para-ḍela-pā|",
    "793:4": "namo ratnatrayāya",
    "793:5": "ye dharmā hetuprabhavā hetuṃ teṣāṃ tathāgato hyavadat|",
    "793:6": "teṣāṃ ca yo nirodha evaṃvādī mahāśramaṇaḥ||",
    "793:7": "ityuktam|",
    "793:8": "atra 'ye dharmā' iti saptabhiḥ prakārairavagantavyāḥ|",
    "793:9": "tadyathā-vijñānaṃ nāmarūpaṃ ṣaḍāyatanaṃ sparśaḥ vedanā jātirjarāmaraṇamiti|",
    "793:10": "ime dharmāḥ api pañcabhyaḥ prakārebhya utpadyanta iti 'hetuprabhavāḥ' ityuktam|",
    "793:11": "ke te pañca hetavaḥ ?",
    "793:12": "avidyā tṛṣṇā upādānaṃ saṃskārā bhavaśceti|",
    "793:13": "saptavidhānāṃ dharmāṇāṃ pañcaprakārāṇāṃ ca teṣāṃ hetūnāṃ nirodhastāvad 'hetuṃ teṣāṃ ca yo nirodhaḥ' ityādinā'bhihitaḥ|",
    "793:14": "sa evopaśamaḥ mokṣo nirvāṇa-miti|",
    "793:15": "sa ca kenoktaḥ ?",
    "793:16": "'tathāgato hyavadat|",
    "793:17": "iti|",
    "793:18": "tenopadiṣṭa ityabhiprāyeṇa tathā kathitam|",
    "793:19": "arthānāṃ yathā sthitistathā (yathāvat)",
    "793:20": "avabodhāt 'tathāgataḥ' ityucyate|",
    "793:21": "vastūnāṃ yathā sthitiḥ,",
    "793:22": "tasyā abhrāntatayā anyebhyo deśanād vā 'tathāgataḥ'|",
    "793:23": "evaṃvidho yo deśakaḥ,",
    "793:24": "yaścaivaṃ svayaṃ bodhakaḥ śravaṇaśīlayuktaśca sa 'evaṃvādī' (mahāśramaṇaḥ) ityuktaḥ|",
    "793:25": "'mahān'-śabdaḥ pradhāna-adbhuta-parama-pravaraparyāyaḥ|",
    "793:26": "yo vādī vidvān vīraḥ tapasvī mahotsāhaḥ tīvravīryaḥ adbhutakarmakāri ca bhavati,",
    "793:27": "sa eva 'mahān' iti|",
    "793:28": "(sa) aśeṣajñātavyānāṃ jñānād 'vidvān'|",
    "793:29": "aśeṣakleśānāṃ damane samarthatvād 'vīraḥ'|",
    "793:30": "śīlasya samyagbhāvanayā 'tapasvī' |",
    "793:31": "guṇādiṣvaparikhedād 'mahotsāhaḥ'|",
    "793:32": "yasya śiraḥ kapālaṃ vā agninā dīptam,",
    "793:33": "tadavān iva 'tīvravīryaḥ tathā adbhutadharmāṇāṃ sākṣātkāritvād 'adbhutakarmakārī' iti|",
    "793:34": "etādṛśa eva 'mahān' ityucyate|",
    "793:35": "śramaṇaḥ iti pāpānāṃ kleśānāṃ copaśamād 'śramaṇaḥ'|",
    "793:36": "sarvapāpānāṃ prakṣālanād 'brāhmaṇaḥ'|",
    "793:37": "kleśaklamathaparivarjanād 'śramaṇaḥ' svakīyamalāpasāraṇāt 'pravrajitaḥ' iti|",
    "793:38": "ityevaṃvidhairguṇaiḥ samanvāgata iti|",
    "793:39": "bhagavatā buddhenokta ityanena yogaḥ karaṇīyaḥ|",
    "793:40": "evameva duḥkha-samudaya-nirodha-mārgasatyeṣvapi yogaḥ karaṇīyaḥ|",
    "793:41": "avidyāhetoḥ saṃskārāḥ,",
    "793:42": "ityārabhya jarā-maraṇaparyantaṃ (svabhāvataḥ siddhaṃ)",
    "793:43": "kartāramanapekṣya samutpādastāvad 'anulomaḥ'|",
    "793:44": "avidyādihetūnāṃ nivṛtteravabodhaḥ 'pratilomaḥ' ityuktaḥ|",
    "793:45": "avidyānivṛtteḥ saṃskārādayo nivartanta ityupadeśakārakatvāt (bhagavān buddha eva)",
    "793:46": "'mahāśramaṇaḥ' iti|",
    "793:47": "||ācāryanāgārjunapādaviracitaṃ 'āryadharmadhātugarbhavivaraṇam' samāptam||",
    "793:48": "bhāratīyopādhyāyena jñānagarbheṇa 'mahālocāvā vande palacekmahābhāgena cānūdya saṃśodhya ca sunirṇītam|",
    "793:49": "||bhavatu sarvamaṅgalam||"
}