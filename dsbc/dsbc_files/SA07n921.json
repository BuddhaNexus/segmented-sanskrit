{
  "SA07n921:0": "CANTO VII",
  "SA07n921:1": "tato visṛjyāśrumukhaṃ rudantaṃ",
  "SA07n921:2": "chandaṃ vanacchandatayā nirāsthaḥ |",
  "SA07n921:3": "sarvārthasiddho vapuṣābhibhūya",
  "SA07n921:4": "tamāśramaṃ siddha iva prapede ||1 ||",
  "SA07n921:5": "sa rājasūnurmṛgarājagāmī",
  "SA07n921:6": "mṛgājiraṃ tanmṛgavatpraviṣṭaḥ |",
  "SA07n921:7": "lakṣmīviyukto'pi śarīralakṣmyā",
  "SA07n921:8": "cakṣūṃṣi sarvāśramiṇāṃ jahāra ||2 ||",
  "SA07n921:9": "sthitā hi hastasthayugāstathaiva",
  "SA07n921:10": "kautūhalāccakradharāḥ sadārāḥ |",
  "SA07n921:11": "tamindrakalpaṃ dadṛśurna jagmu-",
  "SA07n921:12": "rdhuryā ivārdhāvanataiḥ śirobhiḥ ||3 ||",
  "SA07n921:13": "viprāśca gatvā bahiridhmahetoḥ",
  "SA07n921:14": "prāptāḥ samitpuṣpavitrahastāḥ |",
  "SA07n921:15": "tapaḥpradhānāḥ kṛtabuddhayo'pi",
  "SA07n921:16": "taṃ draṣṭumīyurna maṭhānabhīyuḥ ||4 ||",
  "SA07n921:17": "hṛṣṭāśca kekā mumucurmayūrā",
  "SA07n921:18": "dṛṣṭvāmbudaṃ nīlamivonnamantaḥ |",
  "SA07n921:19": "śaṣpāṇi hitvābhimukhāśca tasthu-",
  "SA07n921:20": "rmṛgāścalākṣā mṛgacāriṇaśca ||5 ||",
  "SA07n921:21": "dṛṣṭvā tamikṣvākukulapradīpaṃ",
  "SA07n921:22": "jvalantamudyantamivāṃśumantam |",
  "SA07n921:23": "kṛte'pi dohe janitapramodāḥ",
  "SA07n921:24": "prasusruvurhomaduhaśca gāvaḥ ||6 ||",
  "SA07n921:25": "kaścidvasūnāmayamaṣṭamaḥ syā-",
  "SA07n921:26": "tsyādāviśvanoranyataraścyuto vā |",
  "SA07n921:27": "ucceruruccairiti tatra vāca-",
  "SA07n921:28": "staddarśanādvismayajā munīnām ||7 ||",
  "SA07n921:29": "lekharṣabhasyeva vapurdvitīyaṃ",
  "SA07n921:30": "dhāmeva lokasya carācarasya |",
  "SA07n921:31": "sa dyotayāmāsa vanaṃ hi kṛtsnaṃ",
  "SA07n921:32": "yadṛcchayā sūrya ivāvatīrṇaḥ ||8 ||",
  "SA07n921:33": "tataḥ sa tairāśramibhiryathāva-",
  "SA07n921:34": "dabhyarcitaścopanimantritaśca |",
  "SA07n921:35": "pratyarcayāṃ dharmabhṛto babhūva",
  "SA07n921:36": "svareṇa sāmbho'mbudharopamena ||9 ||",
  "SA07n921:37": "kīrṇaṃ tathā puṇyakṛtā janena |",
  "SA07n921:38": "svargābhikāmena vimokṣakāmaḥ |",
  "SA07n921:39": "tamāśramaṃ so'nucacāra dhira-",
  "SA07n921:40": "stapāṃsi citrāṇi nirīkṣamāṇaḥ ||10 ||",
  "SA07n921:41": "tapovikārāṃśca nirīkṣya saumya-",
  "SA07n921:42": "stapovane tatra tapodhanānām |",
  "SA07n921:43": "tapasvinaṃ kaṃcidanuvrajantaṃ",
  "SA07n921:44": "tattvaṃ vijijñāsuridaṃ babhāṣe ||11 ||",
  "SA07n921:45": "tatpūrvamadyāśramadarśanaṃ me",
  "SA07n921:46": "yāsmādimaṃ dharmavidhiṃ na jāne |",
  "SA07n921:47": "tasmābhdavānarhati bhāṣituṃ me",
  "SA07n921:48": "yo niścayo yatprati vaḥ pravṛttaḥ ||12 ||",
  "SA07n921:49": "tato dvijātiḥ sa tapovihāraḥ",
  "SA07n921:50": "śākyarṣabhāyarṣabhavikramāya |",
  "SA07n921:51": "krameṇa tasmai kathayāṃcakāra",
  "SA07n921:52": "tapoviśeṣāṃstapasaḥ phalaṃ ca ||13 ||",
  "SA07n921:53": "agrāmyamannaṃ salile prarūḍhaṃ",
  "SA07n921:54": "parṇīna toyaṃ phalamūlameva |",
  "SA07n921:55": "yathāgamaṃ vṛttiriyaṃ munīnāṃ",
  "SA07n921:56": "bhinnāstu te te tapasāṃ vikalpāḥ ||14 ||",
  "SA07n921:57": "uñchena jīvanti khagā ivānye",
  "SA07n921:58": "tṛṇāni kecinmṛgavaccaranti |",
  "SA07n921:59": "kecidbhujaṅgaiḥ saha vartayanti",
  "SA07n921:60": "valmīkabhūtā vanamārutena ||15 ||",
  "SA07n921:61": "āśmaprayatnārjitavṛttayo'nye",
  "SA07n921:62": "kecitsvadantāpahatānnabhakṣāḥ |",
  "SA07n921:63": "kṛtvā parārtha śrapaṇaṃ tathānye",
  "SA07n921:64": "kurvanti kāryaṃ yadi śeṣamasti ||16 ||",
  "SA07n921:65": "kecijjalaklinnajaṭākalāpā",
  "SA07n921:66": "dviḥ pāvakaṃ juvhati mantrapūrvam |",
  "SA07n921:67": "mīnaiḥ samaṃ kecidapo vigāhya",
  "SA07n921:68": "vasanti kūrmollikhitaiḥ śarīraiḥ ||17 ||",
  "SA07n921:69": "evaṃvidhaiḥ kālacitaistapobhiḥ",
  "SA07n921:70": "parairdivaṃ yāntyaparairnṛlokam |",
  "SA07n921:71": "duḥkhena mārgeṇa sukhaṃ hyupaiti",
  "SA07n921:72": "sukhaṃ hi dharmasya vadanti mūlam ||18 ||",
  "SA07n921:73": "ityevamādi dvipadendravatsaḥ",
  "SA07n921:74": "śrutvā vacastasya tapodhanasya |",
  "SA07n921:75": "adṛṣṭatattvo'pi na saṃtutoṣa |",
  "SA07n921:76": "śanairidaṃ cātmagataṃ babhāṣe ||19 ||",
  "SA07n921:77": "duḥkhātmakaṃ naikavidhaṃ tapaśca",
  "SA07n921:78": "svargapradhānaṃ tapasaḥ phalaṃ ca |",
  "SA07n921:79": "lokāśca sarve pariṇāmavantaḥ",
  "SA07n921:80": "svalpe śramaḥ khalvayamāśramāṇām ||20 ||",
  "SA07n921:81": "priyāṃśca bandhūnviṣayāṃśca hitvā",
  "SA07n921:82": "ye svargahetorniyamaṃ caranti |",
  "SA07n921:83": "te viprayuktāḥ khalu gantukāmā",
  "SA07n921:84": "mahattaraṃ bandhanameva bhūyaḥ ||21 ||",
  "SA07n921:85": "kāyaklamairyaśca tapo'bhidhānaiḥ",
  "SA07n921:86": "pravṛttimakāṅkṣati kāmahetoḥ |",
  "SA07n921:87": "saṃsāradoṣānaparīkṣamāṇo",
  "SA07n921:88": "duḥkhena so'nvicchati duḥkhameva ||22 ||",
  "SA07n921:89": "trāsaśca nityaṃ maraṇātprajānāṃ",
  "SA07n921:90": "yatnena cecchanti punaḥprasūtim |",
  "SA07n921:91": "satyāṃ pravṛttau niyataśca mṛtyu-",
  "SA07n921:92": "statraiva magnā yata eva bhītāḥ ||23 ||",
  "SA07n921:93": "ihārthameke praviśanti khedaṃ",
  "SA07n921:94": "svargārthamanye śramamāpnuvanti |",
  "SA07n921:95": "sukhārthamāśākṛpaṇo'kṛtārthaḥ",
  "SA07n921:96": "patatyanarthe khalu jīvalokaḥ ||24 ||",
  "SA07n921:97": "na khalvayaṃ garhita eva yatno",
  "SA07n921:98": "yo hīnamṛtsṛjya viśeṣagāmi |",
  "SA07n921:99": "prājñaiḥ samānena pariśrameṇa",
  "SA07n921:100": "kāryaṃ tu tadyatra punarna kāryam ||25 ||",
  "SA07n921:101": "śarīrapīḍā tu yadīha dharmaḥ",
  "SA07n921:102": "sukhaṃ śarīrasya bhavatyadharmaḥ |",
  "SA07n921:103": "dharmeṇa cāpnoti sukhaṃ paratra",
  "SA07n921:104": "tasmādadharma phalatīha dharmaḥ ||26 ||",
  "SA07n921:105": "yataḥ śarīraṃ manaso vaśena",
  "SA07n921:106": "pravartate cāpi nivartate ca |",
  "SA07n921:107": "yukto damaścetasa eva tasmā-",
  "SA07n921:108": "ccittādṛte kāṣṭhasamaṃ śarīram ||27 ||",
  "SA07n921:109": "āhāraśuddhyā yadi puṇyamiṣṭaṃ",
  "SA07n921:110": "tasmānmṛgānāmapi puṇyamasti |",
  "SA07n921:111": "ye cāpi bāhyāḥ puruṣāḥ phalebhyo",
  "SA07n921:112": "bhāgyāparādhena parāṅmukhārthāḥ ||28 ||",
  "SA07n921:113": "duḥkhe'bhisaṃdhistvatha puṇyahetuḥ",
  "SA07n921:114": "sukhe'pi kāryo nanu so'bhisaṃdhiḥ |",
  "SA07n921:115": "atha pramāṇaṃ na sukhe'bhisaṃdhi-",
  "SA07n921:116": "rduḥkhe pramāṇaṃ nanu nābhisaṃdhiḥ ||29 ||",
  "SA07n921:117": "tathaiva ye karmaviśuddhihetoḥ",
  "SA07n921:118": "spṛśantyapastīrthamiti pravṛttāḥ |",
  "SA07n921:119": "tatrāpi toṣo hṛdi kevalo'yaṃ",
  "SA07n921:120": "na pāvayiṣyanti hi pāpamāpaḥ ||30 ||",
  "SA07n921:121": "spṛṣṭaṃ hi yadyadguṇavadbhirambha-",
  "SA07n921:122": "stattatpṛthivyāṃ yadi tīrthamiṣṭam |",
  "SA07n921:123": "tasmādguṇāneva paraimi tīrtha-",
  "SA07n921:124": "māpastu niḥsaṃśayamāpa eva ||31 ||",
  "SA07n921:125": "iti sma tattadbahuyuktiyuktaṃ",
  "SA07n921:126": "jagāda cāstaṃ ca yayau vivasvān |",
  "SA07n921:127": "tato havirdhūmavivarṇavṛkṣaṃ",
  "SA07n921:128": "tapaḥpraśāntaṃ sa vanaṃ viveśa ||32 ||",
  "SA07n921:129": "abhyuddhṛtaprajvalitāgnihotraṃ",
  "SA07n921:130": "kṛtābhiṣekarṣijanāvakirṇam |",
  "SA07n921:131": "jāpyasvanākūjitadevakoṣṭhaṃ",
  "SA07n921:132": "dharmasya karmāntamiva pravṛttam ||33 ||",
  "SA07n921:133": "kāścinniśāstatra niśākarābhaḥ",
  "SA07n921:134": "parīkṣamāṇaśca tapāṃsyuvāsa |",
  "SA07n921:135": "sarva parikṣepya tapaśca matvā",
  "SA07n921:136": "tasmāttapaḥkṣetratalājjagāma ||34 ||",
  "SA07n921:137": "anvavrajannāśramiṇastatastaṃ",
  "SA07n921:138": "tadrūpamāhātmyagatairmanobhiḥ |",
  "SA07n921:139": "deśādanāryairabhibhūyamānā-",
  "SA07n921:140": "nmaharṣayo dharmamivāpayāntam ||35 ||",
  "SA07n921:141": "tato jaṭāvalkalacīrakhelāṃ-",
  "SA07n921:142": "stapodhanāṃścaiva sa tāndadarśa |",
  "SA07n921:143": "tapāṃsi caiṣāmanurudhyamāna-",
  "SA07n921:144": "stasthau śive śrīmati vṛkṣamūle ||36 ||",
  "SA07n921:145": "athopasṛtyāśramavāsinastaṃ",
  "SA07n921:146": "manuṣyavarya parivārya tasthuḥ |",
  "SA07n921:147": "vṛddhaśca teṣāṃ bahumānapūrvaṃ",
  "SA07n921:148": "kalena sāmnā giramityuvāca ||37 ||",
  "SA07n921:149": "tvayyāgate pūrṇa ivāśramo'bhū-",
  "SA07n921:150": "tsaṃpadyate śūnya eva prayāte |",
  "SA07n921:151": "tasmādimaṃ nārhasi tāta hātuṃ",
  "SA07n921:152": "jijīviṣordehamiveṣṭamāyuḥ ||38 ||",
  "SA07n921:153": "brahmarṣirājarṣisurarṣijuṣṭaḥ",
  "SA07n921:154": "puṇyaḥ samīpe himavān hi śailaḥ |",
  "SA07n921:155": "tapāṃsi tānyeva tapodhanānāṃ",
  "SA07n921:156": "yatsaṃnikarṣādbahulībhavanti ||39 ||",
  "SA07n921:157": "tīrthāni puṇyāyānyabhitastathaiva",
  "SA07n921:158": "sopānabhūtāni nabhastalasya",
  "SA07n921:159": "juṣṭāni dharmātmabhirātmavadbhi-",
  "SA07n921:160": "rdevarṣibhiścaiva maharṣibhiśca ||40 ||",
  "SA07n921:161": "itaśca bhūyaḥ kṣamamuttaraiva",
  "SA07n921:162": "diksevituṃ dharmīvaśeṣahetoḥ |",
  "SA07n921:163": "na tu kṣamaṃ dakṣiṇato budhena",
  "SA07n921:164": "padaṃ bhavedekamapi prayātum ||41 ||",
  "SA07n921:165": "tapovane'sminnatha niṣkriyo vā",
  "SA07n921:166": "saṃkīrṇadharmāpatito'śucirvā |",
  "SA07n921:167": "dṛṣṭastvayā yena na te vivatsā",
  "SA07n921:168": "tadbrūhi yāvadrucito'stu vāsaḥ ||42 ||",
  "SA07n921:169": "ime hi vāñchanti tapaḥsahāyaṃ",
  "SA07n921:170": "taponidhānapratīmaṃ bhavantam |",
  "SA07n921:171": "vāsastvayā hīndrasamena sārdha",
  "SA07n921:172": "bṛhaspaterabhyudayāvahaḥ syāt ||43 ||",
  "SA07n921:173": "ityevamukte sa tapasvimadhye",
  "SA07n921:174": "tapasvimukhyena manīṣimukhyaḥ |",
  "SA07n921:175": "bhavapraṇāśāya kṛtapratijñaḥ",
  "SA07n921:176": "svaṃ bhāvāmantargatamācacakṣe ||44 ||",
  "SA07n921:177": "ṛjvātmanāṃ dharmabhṛtāṃ munīnā-",
  "SA07n921:178": "miṣṭātithitvātsvajanopamānām |",
  "SA07n921:179": "evaṃvidhairmā prati bhāvajātaiḥ",
  "SA07n921:180": "prītiḥ parā me janitaśca mānaḥ ||45 ||",
  "SA07n921:181": "snigdhābhirābhirhṛdayaṃgamābhiḥ",
  "SA07n921:182": "samāsataḥ snāta ivāsmi vāgbhiḥ |",
  "SA07n921:183": "ratiśca me dharmanavagrahasya",
  "SA07n921:184": "vispanditā saṃprati bhūya eva ||46 ||",
  "SA07n921:185": "evaṃ pravṛttān bhavataḥ śaraṇyā-",
  "SA07n921:186": "natīva saṃdarśitapakṣapātān |",
  "SA07n921:187": "yāsyāmi hitveti mamāpi duḥkhaṃ",
  "SA07n921:188": "yathaiva bandhūṃstyajatastathaiva ||47 ||",
  "SA07n921:189": "svargāya yuṣmākamayaṃ tu dharmo",
  "SA07n921:190": "mamābhilāṣastvapunarbhavāya |",
  "SA07n921:191": "asminvane yena na me vivatsā",
  "SA07n921:192": "bhinnaḥ pravṛttyā hi nivṛttidharmaḥ ||48 ||",
  "SA07n921:193": "tannāratirme na parāpacāro",
  "SA07n921:194": "vanādito yena parivrajāmi |",
  "SA07n921:195": "dharme sthitāḥ pūrvayugānurūpe",
  "SA07n921:196": "sarve bhavanto hi maharṣikalpāḥ ||49 ||",
  "SA07n921:197": "tato vacaḥ sūnṛtamarthavacca",
  "SA07n921:198": "suślakṣṇamojasvi ca garvita ca |",
  "SA07n921:199": "śrutvā kumārasya tapasvinaste",
  "SA07n921:200": "viśeṣayuktaṃ bahumānamīyuḥ ||50 ||",
  "SA07n921:201": "kaściddvijastatra tu bhasmaśāyī",
  "SA07n921:202": "prāṃśuḥ śikhī dāravacīravāsāḥ |",
  "SA07n921:203": "āpiṅgalākṣastanudīrghaghoṇaḥ",
  "SA07n921:204": "kuṇḍaikahasto giramityuvāca ||51 ||",
  "SA07n921:205": "dhīmannudāraḥ khalu niścayaste",
  "SA07n921:206": "yastvaṃ yuvā janmani dṛṣṭadoṣaḥ |",
  "SA07n921:207": "svargāpavargau hi vicārya samya-",
  "SA07n921:208": "gyasyāpavarge matirasti so'sti ||52 ||",
  "SA07n921:209": "yajñaistapobhirniyamaiśca taistaiḥ",
  "SA07n921:210": "svarga yiyāsanti hi rāgavantaḥ |",
  "SA07n921:211": "rāgeṇa sārdha ripuṇeva yuddhvā",
  "SA07n921:212": "mokṣaṃ parīpsanti tu sattvavantaḥ ||53 ||",
  "SA07n921:213": "tadbuddhireṣā yadi niścitā te",
  "SA07n921:214": "tūrṇaṃ bhavān gacchatu vindhyakoṣṭham |",
  "SA07n921:215": "asau munistatra vasatyarāḍo",
  "SA07n921:216": "yo naiṣṭhike śreyasi labdhacakṣuḥ ||54 ||",
  "SA07n921:217": "tasmādbhavāñcchroṣyati tattvamārga",
  "SA07n921:218": "satyāṃ rucau saṃpratipatsyate ca |",
  "SA07n921:219": "yathā tu paśyāmi matistathaiṣā",
  "SA07n921:220": "tasyāpi yāsyatyavadhūya buddhim ||55 ||",
  "SA07n921:221": "spaṣṭoccaghoṇaṃ vipulāyatākṣaṃ |",
  "SA07n921:222": "tāmrādharauṣṭhaṃ sitatīkṣaṇadaṃṣṭram |",
  "SA07n921:223": "idaṃ hi vaktuṃ tanuraktajivhaṃ",
  "SA07n921:224": "jñeyārṇavaṃ pāsyati kṛtsnameva ||56 ||",
  "SA07n921:225": "gambhīratā yā bhavatastvagādhā",
  "SA07n921:226": "yā dīptatā yāni ca lakṣaṇāni |",
  "SA07n921:227": "ācāryakaṃ prāpsyasi tatpṛthivyāṃ",
  "SA07n921:228": "yannarṣibhiḥ pūrvayuge'pyavāptam ||57 ||",
  "SA07n921:229": "paramamiti tato nṛpātmaja-",
  "SA07n921:230": "stamṛṣijanaṃ pratinandya niryayau |",
  "SA07n921:231": "vidhivadanuvidhāya te'pi taṃ",
  "SA07n921:232": "praviviśurāśramiṇastapovanam ||58 ||",
  "SA07n921:233": "iti buddhacarite mahākāvye",
  "SA07n921:234": "tapovanapraveśo nāma saptamaḥ sargaḥ ||7 ||"
}