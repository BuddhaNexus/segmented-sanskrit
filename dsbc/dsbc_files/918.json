{
    "918:0": "CANTO IV",
    "918:1": "tatastasmātpurodyānā-",
    "918:2": "tkautūhalacalekṣaṇāḥ|",
    "918:3": "pratyujjagmurnṛpasutaṃ",
    "918:4": "prāptaṃ varamiva striyaḥ||1||",
    "918:5": "abhigamya ca tāstasmai",
    "918:6": "vismayotphullalocanāḥ|",
    "918:7": "cakrire samudācāraṃ",
    "918:8": "padmakośanibhaiḥ karaiḥ||2||",
    "918:9": "tasthuśca parivāryainaṃ",
    "918:10": "manmathākṣiptacetasaḥ|",
    "918:11": "niścalaiḥ prītivikacaiḥ",
    "918:12": "pibantya iva locanaiḥ||3||",
    "918:13": "taṃ hi tā menire nāryaḥ",
    "918:14": "kāmo vigrahavāniti|",
    "918:15": "śobhitaṃ lakṣaṇairdīptaiḥ",
    "918:16": "sahajairbhūṣāṇairiva||4||",
    "918:17": "saumyatvāccaiva dhairyācca",
    "918:18": "kāścidenaṃ prajajñire|",
    "918:19": "avatīrṇo mahī sākṣād",
    "918:20": "guḍhāṃśuścandramā iti||5||",
    "918:21": "tasya tā vapuṣākṣiptā",
    "918:22": "nigṛhītaṃ jajṛmbhire|",
    "918:23": "anyonyaṃ dṛṣṭibhirhatvā",
    "918:24": "śanaiśca viniśaśvasuḥ||6||",
    "918:25": "evaṃ tā dṛṣṭimātreṇa",
    "918:26": "nāryo dadṛśureva tam|",
    "918:27": "na vyājahurna jahasuḥ",
    "918:28": "prabhāveṇāsya yantritāḥ||7||",
    "918:29": "tāstathā nu nirārambhā",
    "918:30": "dṛṣṭvā praṇayaviklavāḥ|",
    "918:31": "purohitasuto dhīmā-",
    "918:32": "nudāyī vākyamabravīt||8||",
    "918:33": "sarvāḥ sarvakalājñāḥ stha",
    "918:34": "bhāvagrahaṇapaṇḍitāḥ|",
    "918:35": "rupacāturyasaṃpannāḥ",
    "918:36": "svaguṇairmukhyatāṃ gatāḥ||9||",
    "918:37": "śobhayeta guṇairebhi-",
    "918:38": "rapi tānuttarān kurūn|",
    "918:39": "kuberasyāpi cākrīḍaṃ",
    "918:40": "prāgeva vasudhāmimām||10||",
    "918:41": "śaktāścaliyituṃ yūyaṃ",
    "918:42": "vitarāgānuṣīnapi|",
    "918:43": "apsarobhiśca kalitān",
    "918:44": "grahītuṃ vibudhānapi||11||",
    "918:45": "bhāvajñānena hāvena",
    "918:46": "rūpacāturyasaṃpadā|",
    "918:47": "strīṇāmeva ca śaktāḥ stha",
    "918:48": "saṃrāge kiṃ punarnṛṇām||12||",
    "918:49": "tāsāmevaṃvidhānāṃ vo",
    "918:50": "viyuktānāṃ svagocare|",
    "918:51": "iyamevaṃvidhā ceṣṭā",
    "918:52": "na tuṣṭo'smyārjavena vaḥ||13||",
    "918:53": "idaṃ navavadhūnāṃ vo",
    "918:54": "hrīnīkuñcitacakṣuṣām|",
    "918:55": "sadṛśaṃ ceṣṭitaṃ hi syā-",
    "918:56": "dapi vā gopāyoṣitām||14||",
    "918:57": "yadapi syādayaṃ dhīraḥ",
    "918:58": "śriprabhāvānmahāniti|",
    "918:59": "strīṇāmapi mahatteja",
    "918:60": "itaḥ kāryo'tra niścayaḥ||15||",
    "918:61": "purā hi kāśisundaryā",
    "918:62": "veśavadhvā mahānṛṣiḥ|",
    "918:63": "tāḍito'bhūtpadā vyāso",
    "918:64": "durdharṣo devatairapi ||16||",
    "918:65": "manthālagautamo bhikṣu-",
    "918:66": "rjaṅghayā vāramukhyayā|",
    "918:67": "piprīṣuśca tadarthārthaṃ",
    "918:68": "vyasūnniraharatpurā||17||",
    "918:69": "gautamaṃ dīrghatapasaṃ",
    "918:70": "maharṣi dīrghajīvinam|",
    "918:71": "yoṣitsaṃtoṣayāmāsa",
    "918:72": "varṇasthānāvarā satī||18||",
    "918:73": "ṛṣyaśṛṅgaṃ munisutaṃ",
    "918:74": "tathaiva strīṣvapaṇḍitam|",
    "918:75": "upāyairvividhaiḥ śāntā",
    "918:76": "jagrāha ca jahāra ca||19||",
    "918:77": "viśvāmitro maharṣiśca",
    "918:78": "vigāḍho'pi mahattapaḥ|",
    "918:79": "daśa varṣāṇyaharmene",
    "918:80": "ghṛtācyāpsarasā hṛtaḥ||20||",
    "918:81": "evamādīnṛṣīstāṃstā-",
    "918:82": "nanayanvikriyāṃ striyaḥ|",
    "918:83": "lalitaṃ pūrvavayasaṃ",
    "918:84": "kiṃ punarnṛpateḥ sutam||21||",
    "918:85": "tadevaṃ sati viśrabdhaṃ",
    "918:86": "prayatadhvaṃ tathā yathā|",
    "918:87": "iyaṃ nṛpasya vaṃśaśrī-",
    "918:88": "rito na syātparāṅmukhī||22||",
    "918:89": "yā hi kāścidyuvatayo",
    "918:90": "haranti sadṛśaṃ janam|",
    "918:91": "nikṛṣṭotkṛṣṭayorbhāvaṃ",
    "918:92": "yā gṛhṇanti tu tāḥ striyaḥ||23||",
    "918:93": "ityudāyivacaḥ śrutvā",
    "918:94": "tā viddhā iva yoṣitaḥ|",
    "918:95": "samāruruhurātmānaṃ",
    "918:96": "kumāragrahaṇaṃ prati||24||",
    "918:97": "tā bhrūmiḥ prekṣitairhāvai-",
    "918:98": "rhasitailīḍitairgataiḥ|",
    "918:99": "cakrurākṣepikāśceṣṭā",
    "918:100": "bhītabhītā ivāṅganāḥ||25||",
    "918:101": "rājñastu viniyogena",
    "918:102": "kumārasya ca mārdavāt|",
    "918:103": "jahuḥ kṣipramaviśrambhaṃ",
    "918:104": "madena madanena ca||26||",
    "918:105": "atha nārījanavṛtaḥ",
    "918:106": "kumāro vyacaradvanam|",
    "918:107": "vāsitāyūthasahitaḥ",
    "918:108": "karīva himavadvanam||27||",
    "918:109": "sa tasmin kānane ramye",
    "918:110": "jajvāla strīpuraḥsaraḥ|",
    "918:111": "ākrīḍa iva vibhrāje",
    "918:112": "vivasvānapsarovṛtaḥ||28||",
    "918:113": "madenāvarjitā nāma",
    "918:114": "taṃ kāścittatra yiṣitaḥ|",
    "918:115": "kaṭhinaiḥ paspṛśuḥ pīnaiḥ",
    "918:116": "saṃhatairvalgubhiḥ stanaiḥ||29||",
    "918:117": "srastāṃsakomalālamba-",
    "918:118": "mṛdubāhulatābalā|",
    "918:119": "anṛtaṃ skhalitaṃ kāci-",
    "918:120": "tkṛtvainaṃ sasvaje balāt||30||",
    "918:121": "kācittāmrādharoṣṭhena",
    "918:122": "mukhenāsavagandhinā|",
    "918:123": "viniśaśvāsa karṇe'sya",
    "918:124": "rahasyaṃ śrūyatāmiti||31||",
    "918:125": "kācidājñāpayantīva",
    "918:126": "provācārdrānulepanā|",
    "918:127": "iha bhaktiṃ kuruṣveti",
    "918:128": "hastasaṃśleṣalipsayā||32||",
    "918:129": "muhurmuhurmadavyāja-",
    "918:130": "srastanīlāṃśukāparā|",
    "918:131": "ālakṣyaraśanā reje",
    "918:132": "sphuradvidyudiva kṣapā||33||",
    "918:133": "kāścitkanakakāñcībhi-",
    "918:134": "rmukharābhiritastataḥ|",
    "918:135": "babhramurdarśayantyo'sya",
    "918:136": "śroṇīstanvaṃśukāvṛtāḥ||34||",
    "918:137": "cūtaśākhāṃ kusumitāṃ",
    "918:138": "pragṛhyānyā lalambire|",
    "918:139": "suvarṇakalaśaprakhyā-",
    "918:140": "ndarśayantyaḥ payodharān||35||",
    "918:141": "kācitpadmavanādetya",
    "918:142": "sapadmā padmalocanā|",
    "918:143": "padmavaktrasya pārśve'sya",
    "918:144": "padmaśrīriva tasthuṣī||36||",
    "918:145": "madhuraṃ gītamanvarthaṃ",
    "918:146": "kācitsābhinayaṃ jagau|",
    "918:147": "taṃ svasthaṃ codayantīva",
    "918:148": "vañcito'sītyavekṣitaiḥ||37||",
    "918:149": "śubhena vadanenānyā",
    "918:150": "bhrūkārmukavikarṣiṇā|",
    "918:151": "prāvṛtyānucakārāsya",
    "918:152": "ceṣṭitaṃ dhīralīlayā||38||",
    "918:153": "pīnavalgustanī kāci-",
    "918:154": "ddhāsāghūrṇitakuṇḍalā|",
    "918:155": "uccairavajahāsainaṃ",
    "918:156": "samāpnotu bhavāniti||39||",
    "918:157": "apayāntaṃ tathaivānyā",
    "918:158": "babandhurmālyadāmabhiḥ|",
    "918:159": "kāścitsākṣepamadhurai-",
    "918:160": "rjagṛharvacanāṅkuśaiḥ||40||",
    "918:161": "pratiyogārthinī kācid",
    "918:162": "gṛhītvā cūtavallarīm|",
    "918:163": "idaṃ puṣpaṃ tu kasyeti|",
    "918:164": "papraccha madaviklavā||41||",
    "918:165": "kācitpuruṣavatkṛtvā",
    "918:166": "gatiṃ saṃsthānameva ca|",
    "918:167": "uvācainaṃ jitaḥ strībhī-",
    "918:168": "rjaya bho pṛthivīmimām||42||",
    "918:169": "atha lolekṣaṇā kāci-",
    "918:170": "jjighrantī nīlamutpalam|",
    "918:171": "kiṃcinmadakalairvākyai",
    "918:172": "rnṛpātmajamabhāṣata||43||",
    "918:173": "paśya bhartīścitaṃ cūtaṃ",
    "918:174": "kusumairmadhugandhibhiḥ|",
    "918:175": "hemapañjararuddho vā",
    "918:176": "kokilo yatra kūjati||44||",
    "918:177": "aśoko dṛśyatāmeṣa",
    "918:178": "kāmiśokavivardhanaḥ|",
    "918:179": "ruvanti bhramarā yatra",
    "918:180": "dahyamānā ivāgninā||45||",
    "918:181": "cūtayaṣṭyā samāśliṣṭo",
    "918:182": "dṛśyatāṃ tilakadrumaḥ|",
    "918:183": "śuklavāsā iva naraḥ",
    "918:184": "striyā pītāṅgarāgayā||46||",
    "918:185": "phullaṃ kurubakaṃ paśya",
    "918:186": "nirbhuktālaktakaprabham|",
    "918:187": "yo nakhaprabhayā strīṇāṃ",
    "918:188": "nirbhīrtsata ivānataḥ||47||",
    "918:189": "bālāśokaśca nicito",
    "918:190": "dṛśyatāmeṣa pallavaiḥ|",
    "918:191": "yo'smākaṃ hastaśobhābhi-",
    "918:192": "rlajjamāna iva sthitaḥ||48||",
    "918:193": "dīrghikā prāvṛtāṃ paśya",
    "918:194": "tīrajaiḥ sinduvārakaiḥ|",
    "918:195": "pāṇḍurāṃśukasaṃvītāṃ",
    "918:196": "śayānāṃ pramadāmiva||49||",
    "918:197": "dṛśyatāṃ strīṣu māhātmyaṃ",
    "918:198": "cakravāko hyasau jale|",
    "918:199": "pṛṣṭhataḥ preṣyavadbhāryā-",
    "918:200": "manuvartyanugacchati||50||",
    "918:201": "mattasya parapuṣṭasya",
    "918:202": "ruvataḥ śrūyatāṃ dhvaniḥ|",
    "918:203": "aparaḥ kokilo'nvakṣaṃ",
    "918:204": "pratiśrutkeva kūjati||51||",
    "918:205": "api nāma vihaṅgānāṃ",
    "918:206": "vasantenāhṛto madaḥ|",
    "918:207": "na tu cintayato'cintyaṃ",
    "918:208": "janasya prājñamāninaḥ||52||",
    "918:209": "ityevaṃ tā yuvatayo",
    "918:210": "manmathoddāmacetasaḥ|",
    "918:211": "kumāraṃ vividhaistaistai-",
    "918:212": "rupacakramire nayaiḥ||53||",
    "918:213": "evamākṣipyamāṇo'pi|",
    "918:214": "satu dhairyāvṛtendriyaḥ|",
    "918:215": "martavyamiti sodvego",
    "918:216": "na jaharṣa na vivyathe||54||",
    "918:217": "tāsāṃ tattve'navasthānaṃ",
    "918:218": "dṛṣṭvā sa puruṣottamaḥ|",
    "918:219": "samaṃ vignena dhīreṇa",
    "918:220": "cintayāmāsa cetasā||55||",
    "918:221": "kiṃ tvimā nāvagacchanti",
    "918:222": "capalaṃ yauvanaṃ striyaḥ|",
    "918:223": "yato rūpeṇa saṃmattaṃ",
    "918:224": "jarā yannāśayiṣyati||56||",
    "918:225": "nūnametā na paśyanti",
    "918:226": "kasyacidrogasaṃplavam|",
    "918:227": "tathā hṛṣṭā bhayaṃ tyaktvā",
    "918:228": "jagati vyadhidharmiṇi||57||",
    "918:229": "anabhijñāśca suvyaktaṃ",
    "918:230": "mṛtyoḥ sarvāpahāriṇaḥ|",
    "918:231": "tataḥ svasthā nirudvignāḥ",
    "918:232": "krīḍanti ca hasanti ca||58||",
    "918:233": "jarāṃ vyādhiṃ ca mṛtyuṃ ca",
    "918:234": "ko hi jānansacetanaḥ|",
    "918:235": "svasthastiṣṭhenniṣīdedvā",
    "918:236": "śayedvā kiṃ punarhaset||59||",
    "918:237": "yastu dṛṣṭvā paraṃ jīrṇa",
    "918:238": "vyādhitaṃ mṛtameva ca|",
    "918:239": "svastho bhavati nodvigno",
    "918:240": "yathācetāstathaiva saḥ||60||",
    "918:241": "viyujyamāne hi tarau",
    "918:242": "puṣpairapi phalairapi|",
    "918:243": "patati cchidyamāne vā",
    "918:244": "taruranyo na śocate||61||",
    "918:245": "iti dhyānaparaṃ dṛṣṭvā",
    "918:246": "viṣayebhyo gataspṛham|",
    "918:247": "udāyī nītiśāstrajña-",
    "918:248": "stamuvāca suhṛttayā||62||",
    "918:249": "ahaṃ nṛpatinā dattaḥ",
    "918:250": "sakhā tubhyaṃ kṣamaḥ kila|",
    "918:251": "yāsmāttvayi vivakṣā me",
    "918:252": "tayā praṇayavattayā||63||",
    "918:253": "ahitātpratiṣedhaśca",
    "918:254": "hite cānupravartanam|",
    "918:255": "vyasane cāparityāga-",
    "918:256": "strividhaṃ mitralakṣaṇam||64||",
    "918:257": "so'haṃ maitrīṃ pratijñāya",
    "918:258": "puruṣārthātparāṅmukhaḥ|",
    "918:259": "yadi tvā samupekṣeya",
    "918:260": "na bhavenmitratā mayi||65||",
    "918:261": "tadbravīmi suhṛdbhūtvā",
    "918:262": "taruṇasya vapuṣmataḥ|",
    "918:263": "idaṃ na pratirūpaṃ te",
    "918:264": "strīṣvadākṣiṇyamīdṛśam||66||",
    "918:265": "anṛtenāpi nārīṇāṃ",
    "918:266": "yuktaṃ samanuvartanam|",
    "918:267": "tadvrīḍāparihārārtha-",
    "918:268": "mātmaratyarthameva ca||67||",
    "918:269": "saṃnatiścānuvṛttiśca",
    "918:270": "strīṇāṃ hṛdayabandhanam|",
    "918:271": "snehasya hi guṇā yoni-",
    "918:272": "rmānakāmāśca yoṣitaḥ||68||",
    "918:273": "tadarhasi viśālākṣa",
    "918:274": "hṛdaye'pi parāṅmukhe|",
    "918:275": "rūpasyāsyānurūpeṇa",
    "918:276": "dākṣiṇyenānuvartitum||69||",
    "918:277": "dākṣiṇyamauṣadhaṃ strīṇāṃ",
    "918:278": "dākṣiṇyaṃ bhūṣaṇaṃ param|",
    "918:279": "dākṣiṇyarahitaṃ rūpaṃ",
    "918:280": "niṣpuṣpamiva kānanam||70||",
    "918:281": "kiṃ vā dākṣiṇyamātreṇa",
    "918:282": "bhāvenāstu parigrahaḥ|",
    "918:283": "viṣayāndurlabhāllabdhvā",
    "918:284": "na hyavajñātumarhasi||71||",
    "918:285": "kāmaṃ paramiti jñātvā",
    "918:286": "devo'pi hi puraṃdaraḥ|",
    "918:287": "gautamasya muneḥ patnī-",
    "918:288": "mahalyāṃ cakame purā||72||",
    "918:289": "agastyaḥ prārthayāmāsa",
    "918:290": "somabhāryā ca rohiṇīm|",
    "918:291": "tasmāttatsadṛśī lebhe",
    "918:292": "lopāmudrāmiti śrutiḥ||73||",
    "918:293": "utathyasya ca bhāryāyāṃ",
    "918:294": "mamātāyaṃ mahātapaḥ|",
    "918:295": "mārutyāṃ janayāmāsa",
    "918:296": "bharadvājaṃ bṛhaspatiḥ||74||",
    "918:297": "bṛhaspatermahiṣyāṃ ca",
    "918:298": "juvhatyāṃ juvhatāṃ varaḥ|",
    "918:299": "budhaṃ vibudhakarmāṇaṃ",
    "918:300": "janayāmāsa candramāḥ||75||",
    "918:301": "kālīṃ caiva purā kanyāṃ",
    "918:302": "jalaprabhavasaṃbhavām|",
    "918:303": "jagāma yamunātīre",
    "918:304": "jātarāgaḥ parāśaraḥ||76||",
    "918:305": "mātaṅgayāmakṣamālāyāṃ",
    "918:306": "garhitāyāṃ riraṃsayā|",
    "918:307": "kapiñjalādaṃ tanayaṃ",
    "918:308": "vasiṣṭho'janayanmuniḥ||77||",
    "918:309": "yayātiścaiva rājarṣi-",
    "918:310": "rvayasyapi vinirgate|",
    "918:311": "viśvācyāpsarasā sārdhaṃ",
    "918:312": "reme caitrarathe vane||78||",
    "918:313": "strīsaṃsarga vināśāntaṃ",
    "918:314": "pāṇḍurjñātvāpi kauravaḥ|",
    "918:315": "mādrīrūpaguṇākṣiptaḥ",
    "918:316": "siṣeve kāmajaṃ sukham||79||",
    "918:317": "karālajanakaścaiva",
    "918:318": "hṛtvā brāhmaṇakanyakām|",
    "918:319": "avāpa bhraṃśamapyevaṃ",
    "918:320": "na tu seje na manmatham||80||",
    "918:321": "evamādyā mahātmāno",
    "918:322": "viṣayān garhitānapi|",
    "918:323": "ratihetorbubhujire",
    "918:324": "prāgeva guṇasaṃhitān||81||",
    "918:325": "tvaṃ punarnyāyataḥ prāptān",
    "918:326": "balavān rūpavānyuvā|",
    "918:327": "viṣayānavajānāsi",
    "918:328": "yatra saktamidaṃ jagat||82||",
    "918:329": "iti śrutvā vacastasya",
    "918:330": "ślakṣṇamāgamasaṃhitam|",
    "918:331": "meghastanitanirghoṣaḥ",
    "918:332": "kumāraḥ pratyabhāṣata||83||",
    "918:333": "upapannamidaṃ vākyaṃ",
    "918:334": "sauhārdavyañjakaṃ tvayi|",
    "918:335": "atra ca tvānuneṣyāmi",
    "918:336": "yatra mā duṣṭhu manyase||84||",
    "918:337": "nāvajānāmi viṣayān",
    "918:338": "jāne lokaṃ tadātmakam|",
    "918:339": "anityaṃ tu jagamatvā",
    "918:340": "nātra me ramate manaḥ||85||",
    "918:341": "jarā vyādhiśca mṛtyuśca",
    "918:342": "yadi na syādidaṃ trayam|",
    "918:343": "mamāpi hi manojñeṣu",
    "918:344": "viṣayeṣu ratirbhavet||86||",
    "918:345": "nityaṃ yadapi hi strīṇā-",
    "918:346": "metadeva vapurbhavet|",
    "918:347": "doṣavatsvapi kāmeṣu",
    "918:348": "kāmaṃ rajyeta me manaḥ||87||",
    "918:349": "yadā tu jarayāpītaṃ",
    "918:350": "rūpamāsāṃ bhaviṣyati|",
    "918:351": "ātmano'pyanabhipretaṃ",
    "918:352": "mohāttatra ratirbhavet||88||",
    "918:353": "mṛtyuvyādhijarādharmā",
    "918:354": "mṛtyuvyādhijarātmabhiḥ|",
    "918:355": "ramamāṇo hyasaṃvignaḥ",
    "918:356": "samāno mṛgapakṣibhiḥ||89||",
    "918:357": "yadapyāttha mahātmāna-",
    "918:358": "ste'pi kāmātmakā iti|",
    "918:359": "saṃvego'traiva kartavyo",
    "918:360": "yadā teṣāmapi kṣayaḥ||90||",
    "918:361": "māhātmyaṃ na ca tanmanye",
    "918:362": "yatra sāmānyataḥ kṣayaḥ|",
    "918:363": "viṣayeṣu prasaktirvā",
    "918:364": "yuktirvā nātmavattayā||91||",
    "918:365": "yadapyātthānṛtenāpi",
    "918:366": "strījane vartyatāmiti|",
    "918:367": "anṛtaṃ nāvagacchāmi|",
    "918:368": "dākṣiṇyenāpi kiṃcana||92||",
    "918:369": "na cānuvartanaṃ tanme",
    "918:370": "rucitaṃ yatra nārjavam|",
    "918:371": "sarvabhāvena saṃparko",
    "918:372": "yadi nāsti dhigastu tat||93||",
    "918:373": "adhṛteḥ śraddadhānasya",
    "918:374": "saktasyādoṣadarśinaḥ|",
    "918:375": "kiṃ hi vañcayitavyaṃ syā-",
    "918:376": "jjātarāgasya cetasaḥ||94||",
    "918:377": "vañcayanti ca yadyevaṃ",
    "918:378": "jātarāgāḥ parasparam|",
    "918:379": "nanu naiva kṣamaṃ draṣṭuṃ",
    "918:380": "narāḥ strīṇāṃ nṛṇāṃ striyaḥ||95||",
    "918:381": "tadevaṃ sati duḥkhārta",
    "918:382": "jarāmaraṇabhāginam|",
    "918:383": "na māṃ kāmeṣvanāryeṣu",
    "918:384": "pratārayitumarhasi||96||",
    "918:385": "aho'tidhīraṃ balavacca te mana-",
    "918:386": "ścaleṣu kāmeṣu ca sāradarśinaḥ|",
    "918:387": "bhaye'titīvre viṣayeṣu sajjase",
    "918:388": "nirīkṣamāṇo maraṇādhvani prajāḥ||97||",
    "918:389": "ahaṃ punarbhīruratīvaviklavo",
    "918:390": "jarāvipadvyādhibhayaṃ vicintayan|",
    "918:391": "labhe na śāntiṃ na dhṛtiṃ kuto ratiṃ",
    "918:392": "niśāmayandīptamivāgninā jagat||98||",
    "918:393": "asaṃśayaṃ mṛtyuriti prajānato",
    "918:394": "narasya rāgo hṛdi yasya jāyate|",
    "918:395": "ayomayīṃ tasya paraimi cetanāṃ",
    "918:396": "mahābhaye rajyati yo na roditi||99||",
    "918:397": "atho kumāraśca viniścayātmikāṃ",
    "918:398": "cakāra kāmāśrayaghātinīṃ kathām|",
    "918:399": "janasya cakṣurgamanīyamaṇḍalo",
    "918:400": "mahīdharaṃ cāstamiyāya bhāskaraḥ||100||",
    "918:401": "tato vṛthādhāritabhūṣaṇasrajaḥ",
    "918:402": "kalāguṇaiśca praṇayaiśca niṣphalaiḥ|",
    "918:403": "sva eva bhāve vinigṛhya manmathaṃ",
    "918:404": "puraṃ yayurbhagnamanorathāḥ striyaḥ||101||",
    "918:405": "tataḥ purodyānagatāṃ janaśriyaṃ",
    "918:406": "nirīkṣya sāyaṃ pratisaṃhṛtāṃ punaḥ|",
    "918:407": "anityatāṃ sarvagatāṃ vicintaya-",
    "918:408": "nviveśa dhiṣṇayaṃ kṣitipālakātmajaḥ||102||",
    "918:409": "tataḥ śrutvā rājā",
    "918:410": "viṣayavimukhaṃ tasya tu mano",
    "918:411": "na śiśye tāṃ rātriṃ",
    "918:412": "hṛdayagataśalyo gaja iva|",
    "918:413": "atha śrānto mantre",
    "918:414": "bahuvividhamārge sasacivo",
    "918:415": "na so'nyatkāmebhyo",
    "918:416": "niyamanamapaśyatsutamateḥ||103||",
    "918:417": "iti buddhacarite mahākāvye strīvighātano",
    "918:418": "nāma caturthaḥ sargaḥ||4||"
}