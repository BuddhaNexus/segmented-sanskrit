{
  "SA20n1394:0": "[saptadaśa yogācārabhūmayaḥ]",
  "SA20n1394:1": "yogācārabhūmiḥ katamā |",
  "SA20n1394:2": "sā saptadaśa bhūmayo draṣṭavyā |",
  "SA20n1394:3": "katamāḥ saptadaśa |",
  "SA20n1394:4": "piṇḍoddānaṃ |",
  "SA20n1394:5": "pañcavijñānasaṃyuktā manobhūmistridhāparā |",
  "SA20n1394:6": "savitarkavicārābhyāṃ samādhisahitā na vā ||",
  "SA20n1394:7": "sacittā cāpyacittā ca śrutacintā sabhāvanā |",
  "SA20n1394:8": "tathā yānatrayopetā sopadhyanupadhī parā ||",
  "SA20n1394:9": "pañcavijñānakāyasamprayuktā bhūmiḥ |",
  "SA20n1394:10": "manobhūmiḥ |",
  "SA20n1394:11": "savitarkā savicārā bhūmiḥ |",
  "SA20n1394:12": "avitarkā vicāramātrā bhūmiḥ |",
  "SA20n1394:13": "avitarkāvicārā bhūmiḥ |",
  "SA20n1394:14": "samāhitā bhūmiḥ |",
  "SA20n1394:15": "asamāhitā bhūmiḥ |",
  "SA20n1394:16": "sacittikā bhūmiḥ |",
  "SA20n1394:17": "acittikā bhūmiḥ |",
  "SA20n1394:18": "śrutamayī bhūmiḥ |",
  "SA20n1394:19": "cintāmayī bhūmiḥ |",
  "SA20n1394:20": "bhāvanāmayī bhūmiḥ |",
  "SA20n1394:21": "śrāvakabhūmiḥ |",
  "SA20n1394:22": "pratyekabuddhabhūmiḥ |",
  "SA20n1394:23": "bodhisattvabhūmiḥ |",
  "SA20n1394:24": "sopadhikā bhūmiḥ |",
  "SA20n1394:25": "nirupadhikā bhūmiḥ |",
  "SA20n1394:26": "ityetāḥ saptadaśa bhūmayaḥ samāsato yogācārabhūmirityucyate ||",
  "SA20n1394:27": "[pañcavijñānakāyasamprayuktā bhūmiḥ prathamā ]",
  "SA20n1394:28": "pañcavijñānakāyasamprayuktā bhūmiḥ katamā |",
  "SA20n1394:29": "pañca vijñānakāyāḥ svabhāvatasteṣāṃ cāśrayaḥ teṣāṃ cālambanaṃ teṣāṃ ca sahāyaḥ teṣāṃ ca karma samāsataḥ pañcavijñānakāyasamprayuktā bhūmiḥ ||",
  "SA20n1394:30": "pañcavijñānakāyāḥ katame |",
  "SA20n1394:31": "cakṣurvijñānaṃ śrotra-ghrāṇa-jihvā-kāyamano vijñānaṃ |",
  "SA20n1394:32": "akṣurvijñānaṃ katamat |",
  "SA20n1394:33": "yā cakṣurāśrayā rūpaprativijñaptiḥ ||",
  "SA20n1394:34": "cakṣurvijñānasyāśrayaḥ katamaḥ |",
  "SA20n1394:35": "cakṣuḥ sahabhūrāśrayaḥ |",
  "SA20n1394:36": "manaḥ samanantara āśrayaḥ |",
  "SA20n1394:37": "sarvabījakamāśrayo pādātṛvipākasaṃgṛhītamālayavijñānaṃ bījāśrayaḥ |",
  "SA20n1394:38": "tadetadabhisamasya dvividha āśrayo bhavati |",
  "SA20n1394:39": "rūpī cārūpī ca |",
  "SA20n1394:40": "tatra cakṣū rūpī |",
  "SA20n1394:41": "tadanyo'rūpī ||",
  "SA20n1394:42": "cakṣuḥ katamat |",
  "SA20n1394:43": "catvāri mahābhūtānyupādāya cakṣurvijñānasaṃniśrayo rūpaprasādo'",
  "SA20n1394:44": "nidarśanaḥ sapratighaḥ ||",
  "SA20n1394:45": "manaḥ katamat |",
  "SA20n1394:46": "yaccakṣurvijñānasyānantarātītaṃ vijñānaṃ ||",
  "SA20n1394:47": "sarvabījakaṃ vijñānaṃ katamat |",
  "SA20n1394:48": "pūrvakaṃ prapañcaratihetumupādāya yaḥ sarvabījako vipāko nirvṛttaḥ ||",
  "SA20n1394:49": "cakṣurvijñānasyālambanaṃ katamat |",
  "SA20n1394:50": "yadrūpaṃ sanidarśanaṃ sapratighaṃ |",
  "SA20n1394:51": "tatpunaranekavidhaṃ |",
  "SA20n1394:52": "samāsato varṇṇaḥ saṃsthānaṃ vijñaptiśca |",
  "SA20n1394:53": "varṇṇaḥ katamaḥ |",
  "SA20n1394:54": "tadyathā nīlaṃ pītaṃ lohitamavadātaṃ chāyātapa āloko'",
  "SA20n1394:55": "ndhakāramabhraṃ dhūmo rajo mahikā nabhaścaikavarṇṇaṃ ||",
  "SA20n1394:56": "saṃsthānaṃ katamat |",
  "SA20n1394:57": "tadyathā dīrghaṃ hrasvaṃ vṛttaṃ parimaṇḍalamaṇu sthūlaṃ śātaṃ viśātaṃ unnatamavanataṃ ||",
  "SA20n1394:58": "vijñaptiḥ katamā |",
  "SA20n1394:59": "tadyathādānaṃ nikṣepaṇaṃ samiñjitaṃ sthānaṃ niṣadyā śayyābhi kramo'",
  "SA20n1394:60": "tikrama ityekavamādiḥ ||",
  "SA20n1394:61": "api khalu varṇṇaḥ katamaḥ |",
  "SA20n1394:62": "yo rūpanibhaścakṣurvijñāna gocaraḥ ||",
  "SA20n1394:63": "saṃsthānaṃ katamat |",
  "SA20n1394:64": "yo rūpapracayo dīrghādiparicchedākāraḥ ||",
  "SA20n1394:65": "vijñaptiḥ katamā |",
  "SA20n1394:66": "tasyaiva pracitasya rūpasyotpannaniruddhasya vairodhikena kāraṇena janmadeśe cānutpattistadanyadeśe ca nirantare sāntare vā sannikṛṣṭe viprakṛṣṭe vā tasminneva vā deśe'",
  "SA20n1394:67": "vikṛtotpattirvijñaptirityucyate ||",
  "SA20n1394:68": "tatra varṇṇa ābhāvabhāsa iti paryāyāḥ ||",
  "SA20n1394:69": "saṃsthānaṃ pracayo dīrghaṃ hrasvamityevamādayaḥ paryāyāḥ ||",
  "SA20n1394:70": "vijñaptiḥ karma kriyā ceṣṭe hā parispanda iti paryāyāḥ ||",
  "SA20n1394:71": "sarvāsāṃ varṇṇasaṃsthānavijñaptīnāṃ cakṣurgocaraścakṣurviṣayaścakṣurvijñānagocaraścakṣurvijñānaviṣayaścakṣurvijñānālambanaṃ manovijñānagocaro manovijñānaviṣayo manovijñānālambanamiti paryāyāḥ ||",
  "SA20n1394:72": "punastadeva suvarṇṇaṃ vā durvarṇṇaṃ vā tadubhayāntarasthāyi vā varṇṇanibhaṃ ||",
  "SA20n1394:73": "sahāyaḥ katamaḥ |",
  "SA20n1394:74": "tatsahabhūsamprayuktāścaitasā dharmāḥ |",
  "SA20n1394:75": "tadyathā |",
  "SA20n1394:76": "manaskāraḥ sparśo vedanā saṃjñā cetaneti |",
  "SA20n1394:77": "ye'pyanye cakṣurvijñānena sahabhūsamprayuktāścaitasā dharmāste punarekālambanā anekākārāḥ sahabhūvaścaikaikavṛttayaśca |",
  "SA20n1394:78": "sarve ca svabījānnirjātāḥ samprayuktāḥ sākārāḥ sālambanāḥ sāśrayāḥ ||",
  "SA20n1394:79": "karma katamat |",
  "SA20n1394:80": "tatṣaḍvidhaṃ draṣṭavyaṃ |",
  "SA20n1394:81": "āditastāvatsvaviṣayālambanavijñaptiḥ karma |",
  "SA20n1394:82": "punaḥ svalakṣaṇavijñaptiḥ |",
  "SA20n1394:83": "punarvartamānakālavijñaptiḥ punarekakṣaṇavijñaptiḥ |",
  "SA20n1394:84": "punardvābhyāmākārābhyāṃ manovijñānānuvṛttiḥ |",
  "SA20n1394:85": "kuśalakliṣṭānuvṛttiśca karmasamutthānānuvṛttiśca |",
  "SA20n1394:86": "punariṣṭāniṣṭaphalaparigrahaḥ ṣaṣṭhaṃ karma ||",
  "SA20n1394:87": "[śrotravijñānam ]",
  "SA20n1394:88": "śrotravijñānaṃ katamat |",
  "SA20n1394:89": "yā śrotrāśrayā śabdaprativijñaptiḥ |",
  "SA20n1394:90": "āśrayaḥ katamaḥ |",
  "SA20n1394:91": "sahabhūrāśrayaḥ śrotraṃ |",
  "SA20n1394:92": "samanantara āśrayo manaḥ bījāśrayastadeva sarvabījakamālayavijñānaṃ |",
  "SA20n1394:93": "śrotraṃ katamat |",
  "SA20n1394:94": "catvāri mahābhūtānyupādāya śrotravijñānasanniśrayo rūpaprasādo'",
  "SA20n1394:95": "nidarśanaḥ sapratighaḥ |",
  "SA20n1394:96": "manobījayoḥ pūrvavadvibhāgaḥ ||",
  "SA20n1394:97": "ālambanaṃ katamat |",
  "SA20n1394:98": "śabdā anekavidhā anidarśanāḥ sapratighāḥ |",
  "SA20n1394:99": "tadyathā śaṅkhaśabdaḥ paṭahaśabdo bherīśabdo mṛdaṅgaśabdo nṛtyaśabdo gītaśabdo vāditaśabda āḍambaraśabdaḥ strīśabdaḥ puruṣaśabdo vāyuvanaspatiśabdo vyakto'",
  "SA20n1394:100": "vyaktaḥ sārthako nirarthakaḥ parītto madhya ucco nadīśabdaḥ kalakalaśabda uddeśasvādhyāyadeśanāsāṅkathyavinirṇayaśabda ityevaṃbhāgīyā bahavaḥ śabdāḥ ||",
  "SA20n1394:101": "sa punarupāttamahābhūtahetuko'",
  "SA20n1394:102": "nupāttamahābhūtahetuka upāttānupāttamahābhūtahetukaścaḥ |",
  "SA20n1394:103": "tatra prathamo yo'",
  "SA20n1394:104": "dhyātmapratyaya eva |",
  "SA20n1394:105": "dvitīyo yo bāhyapratyaya eva |",
  "SA20n1394:106": "tṛtīyo yo bāhyādhyātmapratyaya eva ||",
  "SA20n1394:107": "sa punarmānāpiko'",
  "SA20n1394:108": "mānāpikastadubhayaviparītaśca ||",
  "SA20n1394:109": "tatra śabdo ghoṣaḥ svaro niruktirnādo vāgvijñaptiriti paryāyāḥ ||",
  "SA20n1394:110": "śrotragocaraḥ śrotraviṣayaḥ śrotravijñānagocaraḥ śrotravijñānaviṣayaḥ śrotravijñānālambanaṃ manovijñānagocaro manovijñānaviṣayo manovijñānālambanamiti paryāyāḥ ||",
  "SA20n1394:111": "sahāyaḥ karma ca cakṣurvijñānavadveditavyaṃ ||",
  "SA20n1394:112": "[ghrāṇavijñānam]",
  "SA20n1394:113": "ghrāṇavijñānaṃ katamat |",
  "SA20n1394:114": "yā ghrāṇāśrayā gandhaprativijñaptiḥ |",
  "SA20n1394:115": "āśrayaḥ katamaḥ |",
  "SA20n1394:116": "sahabhūrāśrayo ghrāṇaṃ |",
  "SA20n1394:117": "samanantara āśrayo manaḥ |",
  "SA20n1394:118": "bījāśrayastadeva sarvabījakamālayavijñānaṃ ||",
  "SA20n1394:119": "ghrāṇaṃ katamat |",
  "SA20n1394:120": "yaccatvāri mahābhūtānyupādāya ghrāṇavijñānasaṃniśrayo rūpaprasādo'",
  "SA20n1394:121": "nidarśanaḥ sapratighaḥ ||",
  "SA20n1394:122": "manobījayoḥ pūrvavadvibhāgaḥ ||",
  "SA20n1394:123": "ālambanaṃ katamat |",
  "SA20n1394:124": "gandhā anekavidhā anidarśanāḥ sapratighāḥ sugandhā vā durgandhā vā samagandhā vā ghrāṇīyāstadyathā mūlagandhaḥ sāragandhaḥ patragandhaḥ puṣpagandhaḥ phalagandha ityevamādayo bahavo gandhāḥ ||",
  "SA20n1394:125": "tatra gandho ghrāṇīyo jighraṇīya āghrātavya ityevamādayaḥ paryāyāḥ ||",
  "SA20n1394:126": "ghrāṇagocaro ghrāṇaviṣayo ghrāṇavijñānagocaro ghrāṇavijñānaviṣayo ghrāṇavijñānālambanaṃ manovijñānagocaro manovijñānaviṣayo manovijñānālambanamiti paryāyāḥ ||",
  "SA20n1394:127": "sahāyaḥ karma ca pūrvavadveditavyaṃ ||",
  "SA20n1394:128": "[jihvāvijñānam]",
  "SA20n1394:129": "jihvāvijñānaṃ katamat |",
  "SA20n1394:130": "yā jihvāśrayā rasa prativijñaptiḥ ||",
  "SA20n1394:131": "āśrayaḥ katamaḥ |",
  "SA20n1394:132": "sahabhūrāśrayo jihvā |",
  "SA20n1394:133": "samanantara āśrayo manaḥ |",
  "SA20n1394:134": "bījāśrayastadeva sarvabījakamālayavijñānaṃ ||",
  "SA20n1394:135": "jihvā katamā |",
  "SA20n1394:136": "yaścatvāri mahābhūtānyupādāya jihvāvijñānasanniśrayo rūpaprasādo'",
  "SA20n1394:137": "nidarśanaḥ sapratighaḥ ||",
  "SA20n1394:138": "manobījayoḥ pūrvavadvibhāgaḥ ||",
  "SA20n1394:139": "ālambanaṃ katamat |",
  "SA20n1394:140": "rasā anekavidhā anidarśanāḥ sapratighāḥ |",
  "SA20n1394:141": "te punastiktāmlakaṭukaṣāyalavaṇamadhurā mānāpikā vāmānāpikā vopekṣāsthānīyāḥ svādanīyāḥ |",
  "SA20n1394:142": "tatra rasaḥ svādayitavyo'",
  "SA20n1394:143": "bhyavahartavyo bhojyaṃ peyaṃ lehyaṃ cūṣyamupabhogyamiti paryāyāḥ ||",
  "SA20n1394:144": "jihvāgocaro jihvāviṣayo jihvāvijñānagocaro jihvāvijñānaviṣayo jihvāvijñānālambanaṃ manovijñānagocaro manovijñānaviṣayo manovijñānālambanamiti paryāyāḥ ||",
  "SA20n1394:145": "sahāyaḥ karma ca pūrvavadveditavyaṃ ||",
  "SA20n1394:146": "[kāyavijñānam]",
  "SA20n1394:147": "kāyavijñānaṃ katamat |",
  "SA20n1394:148": "yā kāyāśrayā spraṣṭavyaprativijñaptiḥ ||",
  "SA20n1394:149": "āśrayaḥ katamaḥ |",
  "SA20n1394:150": "sahabhūrāśrayaḥ kāyaḥ |",
  "SA20n1394:151": "samanantarāśrayo manaḥ |",
  "SA20n1394:152": "bījāśrayastadeva sarvabījakamālayavijñānaṃ ||",
  "SA20n1394:153": "kāyaḥ katamaḥ |",
  "SA20n1394:154": "yaścatvāri mahābhūtānyupādāya kāyavijñānasaṃniśrayo rūpaprasādo'",
  "SA20n1394:155": "nidarśanaḥ sapratighaḥ ||",
  "SA20n1394:156": "manobījayoḥ pūrvavadvibhāgaḥ ||",
  "SA20n1394:157": "ālambanaṃ katamat |",
  "SA20n1394:158": "spraṣṭavyamanekavidhamanidarśanaṃ sapratighaṃ |",
  "SA20n1394:159": "tadyathā pṛthivyāpastejo vāyurlaghutvaṃ gurutvaṃ ślakṣṇatvaṃ karkaśatvaṃ śītaṃ jighatsā pipāsā tṛptirbalaṃ daurbalyaṃ vyādhirjarā maraṇaṃ kaṇḍūrmūrcchā picchilaṃ(?)",
  "SA20n1394:160": "śramo viśramo mṛdutvaṃrjava (?)",
  "SA20n1394:161": "ityevaṃbhāgīyaṃ bahuvidhaṃ spraṣṭavyaṃ ||",
  "SA20n1394:162": "tatpunaḥ susaṃsparśaṃ vā dussaṃsparśaṃ vopekṣāsthānīyaṃ vā sparśanīyaṃ ||",
  "SA20n1394:163": "tatra spraṣṭavyaṃ spṛśyaṃ sparśanīyaṃ kharaṃ dravaṃ cala muṣṇamityādayaḥ paryāyāḥ ||",
  "SA20n1394:164": "kāyagocaraḥ kāyaviṣayaḥ kāyavijñānagocaraḥ kāyavijñānaviṣayaḥ kāyavijñānālambanaṃ manovijñānagocaro manovijñānaviṣayo manovijñānālambanamiti paryāyāḥ ||",
  "SA20n1394:165": "sahāyaḥ karma ca pūrvavadveditavyaṃ ||",
  "SA20n1394:166": "[vijñānotpādaḥ]",
  "SA20n1394:167": "tatra cakṣuḥ paribhinnaṃ bhavati |",
  "SA20n1394:168": "rūpamanābhāsagataṃ bhavati |",
  "SA20n1394:169": "na ca tajjo manaskāraḥ pratyupasthito bhavati |",
  "SA20n1394:170": "na tasya cakṣurvijñānotpādo bhavati ||",
  "SA20n1394:171": "yataśca cakṣuraparibhinnaṃ bhavati |",
  "SA20n1394:172": "rūpamābhāsagataṃ bhavati |",
  "SA20n1394:173": "tajjaśca manaskāraḥ pratyupasthito bhavati |",
  "SA20n1394:174": "tatastajjo'",
  "SA20n1394:175": "sya cakṣurvijñānasyotpādo bhavati ||",
  "SA20n1394:176": "yathā cakṣurvijñānamevaṃ śrotraghrāṇajihvākāyavijñānāni draṣṭavyāni ||",
  "SA20n1394:177": "[vijñānasambaddhāni cittāni ]",
  "SA20n1394:178": "tatra cakṣurvijñāna utpanne trīṇi cittānyupalabhyante yathākramamaupanipātikaṃ paryeṣakaṃ niścitaṃ ca |",
  "SA20n1394:179": "tatra cādyaṃ cakṣurvijñānameva |",
  "SA20n1394:180": "dve manovijñāne |",
  "SA20n1394:181": "tatra niścitāccittātparaṃ saṃkleśo vyavadānaṃ ca draṣṭavyaṃ |",
  "SA20n1394:182": "tatastannaiṣyandikaṃ |",
  "SA20n1394:183": "cakṣurvijñānamapi kuśalākuśalaṃ pravarttate |",
  "SA20n1394:184": "na tu svavikalpavaśena |",
  "SA20n1394:185": "tāvacca dvayormanovijñānacakṣurvijñānayoḥ kuśalatvaṃ vā kliṣṭatvaṃ yāvattanmano nānyatra vikṣipyate ||",
  "SA20n1394:186": "yathā cakṣurvijñāna utpanna evaṃ yāvatkāyavijñānaṃ veditavyaṃ ||",
  "SA20n1394:187": "[vijñānopamā]",
  "SA20n1394:188": "tatra deśāntaraprasthitasyeva yānamāśrayo draṣṭavyaḥ |",
  "SA20n1394:189": "pañcānāṃ vijñānakāyānāṃ sahāyārthikavat sahāyāḥ |",
  "SA20n1394:190": "karaṇīya vadālambanaṃ |",
  "SA20n1394:191": "svaśaktivat tatkarma |",
  "SA20n1394:192": "aparaḥ paryāyaḥ |",
  "SA20n1394:193": "gṛhasthasya gṛhavadeṣāmāśrayo draṣṭavyaḥ |",
  "SA20n1394:194": "bhogavadālambanaṃ |",
  "SA20n1394:195": "dāsīdāsādivatsahāyāḥ |",
  "SA20n1394:196": "vyavasāyavat karma ||",
  "SA20n1394:197": " ||yogācārabhūmau pañcavijñānakāya samprayuktā bhūmiḥ prathamā samāptā ||"
}