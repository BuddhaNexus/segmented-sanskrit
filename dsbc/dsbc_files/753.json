{
    "753:0": "tṛtīyo'dhyāyaḥ|",
    "753:1": "caturthapādaḥ|",
    "753:2": "[150] sattvākhyopadravābhāvānna caturthe'sti sūtrataḥ|",
    "753:3": "vimānasya sama(sa)",
    "753:4": "tvasya pradhvaṃsānnityatā kutaḥ||",
    "753:5": "[151] sapta tejobhirekā'dbhirgate'dbhiḥ saptake punaḥ|",
    "753:6": "tejasā saptakāntyaikā vāyu[saṃvartanī tataḥ]||",
    "753:7": "[152] āgneyātsaptakādeka[:",
    "753:8": "] pāvanīkimanantaram|",
    "753:9": "āyuṣparigrahādevaṃ śubhakṛtsnāyuredhanam||",
    "753:10": "[153] vātādidoṣasādharmyā[tsattvā]ṇā(nāṃ)",
    "753:11": "[tadvināśakāḥ]|",
    "753:12": "ādhyātmiketi sārūpyānna bhūsaṃvartaṇī(nī) matā||",
    "753:13": "abhidharmadīpe [vibhāṣāprabhāyāṃ vṛttau tṛtīyasyādhyāyasya ca] turthaḥ pādaḥ samāptaḥ||",
    "753:14": "[tṛtīyo'dhyāyaḥ samāptaḥ]||"
}