{
    "621:0": "30",
    "621:1": "265. yo bodhisattva cirasaṃsaraṇābhiprāyo",
    "621:2": "sattvārtha kṣetrapariśodhanayuktayogī |",
    "621:3": "na ca khedabuddhi aṇumātra upādiyāti",
    "621:4": "so vīryapāramitayukta atandritaśca ||1||",
    "621:5": "266. saci kalpakoṭi gaṇaye vidu bodhisattvo",
    "621:6": "cirasaṃjña bodhi samudāniya tena duḥkhe|",
    "621:7": "ciraduḥkha bheṣyati samācaramāṇu dharmaṃ",
    "621:8": "tatu vīryapāramitahīna kusīdarūpo||2||",
    "621:9": "267. prathamaṃ upādu varabodhayi cittupādo",
    "621:10": "so vā anuttaraśivāmanuprāpuṇeyā|",
    "621:11": "rātriṃdivaikamanasā tamadhiṣṭhiheyā",
    "621:12": "ārambhavīrya vidu paṇḍitu veditavyo||3||",
    "621:13": "268. saci kaścideva vadayeya sumeruśailaṃ",
    "621:14": "bhinditva paśca adhigamyasi agrabodhim|",
    "621:15": "saci khedabuddhi kurute ca pramāṇabuddhiṃ",
    "621:16": "kausīdyaprāpta bhavate tada bodhisattvo||4||",
    "621:17": "269. atha tasyupadyati matī kimutālpamātraṃ",
    "621:18": "kṣaṇamātra bhasma nayatī vilayaṃ sumerum|",
    "621:19": "ārambhavīrya bhavate vidu bodhisattvo",
    "621:20": "nacireṇa bodhivara lapsyati nāyakānām||5||",
    "621:21": "270. saci kāyacittavacasā ca parākrameyyā",
    "621:22": "paripācayitva jagatī kariṣyāmi artham|",
    "621:23": "kausīdyaprāpta bhavatī sthitu ātmasaṃjñaiḥ",
    "621:24": "nairātmabhāvanavidūri nabhaṃ va bhūmeḥ||6||",
    "621:25": "271. yasminna kāyu na pi citta na sattvasaṃjñā",
    "621:26": "saṃjñāvivarti sthitu advayadharmacārī |",
    "621:27": "ayu vīryapāramita ukta hitaṃkareṇa",
    "621:28": "ākāṅkṣamāṇu śivamacyutamagrabodhim||7||",
    "621:29": "272. paruṣaṃ śruṇitva vacanaṃ parato duruktaṃ",
    "621:30": "paritoṣayāti susukhaṃ vidu bodhisattvo |",
    "621:31": "ko bhāṣate ka śṛṇute kutu kasya kena",
    "621:32": "so yukta kṣāntivarapāramitāya vijño||8||",
    "621:33": "273. so bodhisattva kṣamate guṇadharmayukto",
    "621:34": "yaścaiva ratnabharitaṃ trisahasra dadyāt|",
    "621:35": "buddhāna lokavidunārhatapratyayānāṃ",
    "621:36": "kalapuṇya so na bhavate iha dānaskandhe||9||",
    "621:37": "274. kṣāntīsthitasya pariśudhyati ātmabhāvo",
    "621:38": "dvātriṃśalakṣaṇaprabhāva anantapāro|",
    "621:39": "[sattvāna śūnyavaradharma niśāmayātī",
    "621:40": "priyu bhoti sarvajagatī kṣamamāṇu vijño||10||",
    "621:41": "275. saci kaści candanapuṭaṃ grahiyāna sattvo",
    "621:42": "abhyokireya gurupremata bodhisattvam |",
    "621:43": "dvitīyo'pi] agni sakale śirasi kṣipeyā",
    "621:44": "ubhayatra tulyu manu tena upāditavyo||11||",
    "621:45": "276. evaṃ kṣamitva vidu paṇḍitu bodhisattvo",
    "621:46": "taṃ cittupādu pariṇāmayi agrabodhau|",
    "621:47": "yāvanti kṣānti rahapratyayasattvadhātoḥ",
    "621:48": "abhibhoti sarvajagatī kṣamamāṇu śūraḥ||12||",
    "621:49": "277. kṣamamāṇu eva puna citta upāditavyo",
    "621:50": "narakeṣu tiryayamaloki aneka duḥkhā|",
    "621:51": "anubhūya kāmaguṇahetu akāmakārā",
    "621:52": "kasmā hu adya na kṣameya nidāna bodhau||13||",
    "621:53": "278. kaśadaṇḍaśastravadhabandhanatāḍanāśca",
    "621:54": "śirachedakarṇacaraṇākaranāsachedāḥ|",
    "621:55": "yāvanti duḥkha jagatī ahu tatsahāmi",
    "621:56": "kṣāntīya pāramita tiṣṭhati bodhisattvo||14||",
    "621:57": "bhagavatyāṃ ratnaguṇasaṃcayagāthāyāṃ sadāpraruditaparivarto nāma triṃśatimaḥ||"
}