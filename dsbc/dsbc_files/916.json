{
    "916:0": "CANTO II",
    "916:1": "ā janmano janmajarāntakasya",
    "916:2": "tasyātmajasyātmajitaḥ sa rājā|",
    "916:3": "ahanyahanyarthagajāśvamitrai-",
    "916:4": "rvṛddhiṃ yayau sindhurivāmbuvegaiḥ||1||",
    "916:5": "dhanasya ratnasya ca tasya tasya",
    "916:6": "kṛtākṛtasyaiva ca kāñcanasya|",
    "916:7": "tadā hi naikānsa nidhīnavāpa",
    "916:8": "manorathasyāpyatibhārabhūtān||2||",
    "916:9": "ye padmakalpairapi ca dvipendrai-",
    "916:10": "rna maṇḍalaṃ śakyamihābhinetum|",
    "916:11": "madotkaṭā haimavatā gajāste",
    "916:12": "vināpi yatnādupatasthurenam||3||",
    "916:13": "nānāṅkacinhairnavahemabhāṇḍai-",
    "916:14": "rvibhūṣitairlambasaṭaistathānyaiḥ|",
    "916:15": "saṃcukṣubhe cāsya puraṃ turaṅgai-",
    "916:16": "rbalena maitryā ca dhanena cāptaiḥ||4||",
    "916:17": "puṣṭāśca tuṣṭāśca tathāsya rājye",
    "916:18": "sādhvyo'rajaskā guṇavatpayaskāḥ|",
    "916:19": "udagravatsaiḥ sahitā babhūvu-",
    "916:20": "rbavhyo bahukṣīraduhaśca gāvaḥ||5||",
    "916:21": "madhyasthatāṃ tasya ripurjagāma",
    "916:22": "madhyasthabhāvaḥ prayayau suhṛttvam|",
    "916:23": "viśeṣato dārḍhyamiyāya mitraṃ",
    "916:24": "dvāvasya pakṣāvaparastu nāsa||6||",
    "916:25": "tathāsya mandānilameghaśabdaḥ",
    "916:26": "saudāminīkuṇḍalamaṇḍitābhraḥ|",
    "916:27": "vināśmavarṣāśanipātadoṣaiḥ",
    "916:28": "kāle ca deśe pravavarṣa devaḥ||7||",
    "916:29": "ruroha sasyaṃ phalavadyathartu",
    "916:30": "tadākṛtenāpi kṛṣiśrameṇa|",
    "916:31": "tā eva cāsyauṣadhayo rasena",
    "916:32": "sāreṇa caivābhyadhikā babhūvuḥ||8||",
    "916:33": "śarīrasaṃdehakare'pi kāle",
    "916:34": "saṃgrāmasaṃmarda iva pravṛte|",
    "916:35": "svasthāḥ sukhaṃ caiva nirāmayaṃ ca",
    "916:36": "prajajñire kālavaśena nāryaḥ||9||",
    "916:37": "pṛthagvratibhyo vibhave'pi garhye",
    "916:38": "na prārthayanti sma narāḥ parebhyaḥ|",
    "916:39": "abhyarthitaḥ sūkṣmadhano'pi cārya-",
    "916:40": "stadā na kaścidvimukho babhūva||10||",
    "916:41": "nāgauravo bandhuṣu nāpyadātā",
    "916:42": "naivāvrato nānṛtiko na hiṃsraḥ|",
    "916:43": "āsīttadā kaścana tasya rājye",
    "916:44": "rājño yayāteriva nāhuṣasya||11||",
    "916:45": "udyānadevāyatanāśramāṇāṃ",
    "916:46": "kūpaprapāpuṣkariṇīvanānām|",
    "916:47": "cakruḥ kriyāstatra ca dharmakāmāḥ",
    "916:48": "pratyakṣataḥ svargīmavopalabhya||12||",
    "916:49": "muktaśca durbhikṣabhayāmayebhyo",
    "916:50": "hṛṣṭo janaḥ svarga ivābhireme|",
    "916:51": "patnīṃ patirvā mahiṣī patiṃ vā",
    "916:52": "parasparaṃ na vyabhiceratuśca||13||",
    "916:53": "kaścitsiṣeve rataye na kāmaṃ",
    "916:54": "kāmārthamarthaṃ na jugopa kaścit|",
    "916:55": "kaściddhanārthaṃ na cacāra dharma",
    "916:56": "dharmāya kaścinna cakāra hiṃsām||14||",
    "916:57": "steyādibhiścāpyaribhiśca naṣṭaṃ",
    "916:58": "svasthaṃ svacakraṃ paracakramuktam|",
    "916:59": "kṣemaṃ subhikṣaṃ ca babhūva tasya",
    "916:60": "purānaraṇyasya yathaiva rāṣṭre||15||",
    "916:61": "tadā hi tajjanmani tasya rājño",
    "916:62": "manorivādityasutasya rājye|",
    "916:63": "cacāra harṣaḥ praṇanāśa pāpmā",
    "916:64": "jajvāla dharmaḥ kaluṣaḥ śaśāma||16||",
    "916:65": "evaṃvidhā rājakulasya saṃpa-",
    "916:66": "tsarvārthasiddhiśca yato babhūva|",
    "916:67": "tato nṛpastasya sutasya nāma",
    "916:68": "sarvārthasiddhi'yamiti pracakre||17||",
    "916:69": "devī tu māyā vibudharṣikalpaṃ",
    "916:70": "dṛṣṭvā viśālaṃ tanayaprabhāvam|",
    "916:71": "jātaṃ praharṣa na śaśāka soḍhuṃ",
    "916:72": "tato nivāsāya divaṃ jagāma||18||",
    "916:73": "tataḥ kumāraṃ suragarbhakalpaṃ",
    "916:74": "snehena bhāvena ca nirviśeṣam|",
    "916:75": "mātṛṣvasā mātṛsamaprabhāvā",
    "916:76": "saṃvardhayāmātmajavadbabhūva||19||",
    "916:77": "tataḥ sa bālārka ivodayasthaḥ",
    "916:78": "samīrito vanhirivānilena|",
    "916:79": "krameṇa samyagvavṛdhe kumāra-",
    "916:80": "stārādhipaḥ pakṣa ivātamaske||20||",
    "916:81": "tato mahārhāṇi ca candanāni",
    "916:82": "ratnāvalīścauṣadhibhiḥ sagarbhāḥ|",
    "916:83": "mṛgaprayuktān rathakāṃśca haimā-",
    "916:84": "nācakrire'smai suhṛdālayebhyaḥ||21||",
    "916:85": "vayo'nurūpāṇi ca bhūṣaṇāni",
    "916:86": "hiraṇmayān hastimṛgāśvakāṃśca|",
    "916:87": "rathāṃśca goputrakasaṃprayuktān",
    "916:88": "putrīśca cāmīkararūpyacitrāḥ||22||",
    "916:89": "evaṃ sa taistairviṣayopacārai-",
    "916:90": "rvayo'nurūpairupacaryamāṇaḥ|",
    "916:91": "bālo'pyabālapratimo babhūva",
    "916:92": "dhṛtyā ca śaucena dhiyā śriyā ca||23||",
    "916:93": "vayaśca kaumāramatītya samyak",
    "916:94": "saṃprāpya kāle pratipattikarma|",
    "916:95": "alpairahobhirbahuvarṣagāmyā",
    "916:96": "jagrāha vidyāḥ svakulānurūpāḥ||24||",
    "916:97": "naiḥśreyasaṃ tasya tu bhavyamarthaṃ",
    "916:98": "śrutvā purastādasitānmaharṣeḥ|",
    "916:99": "kāmeṣu saṅgaṃ janayāṃbabhūva",
    "916:100": "vanāni yāyāditi śākyarājaḥ||25||",
    "916:101": "kulāttato'smai sthiraśīlayuktā-",
    "916:102": "tsādhvīṃ vapurhrīvinayopapannām|",
    "916:103": "yaśodharāṃ nāma yaśoviśālāṃ",
    "916:104": "vāmābhidhānāṃ śriyamājuhāva||26||",
    "916:105": "vidyotamāno vapuṣā pareṇa",
    "916:106": "sanatkumārapratimaḥ kumāraḥ|",
    "916:107": "sārdha tayā śākyanarendravadhvā",
    "916:108": "śacyā sahasrākṣa ivābhireme||27||",
    "916:109": "kiṃcinmanaḥkṣobhakaraṃ pratīpaṃ",
    "916:110": "kathaṃ na paśyediti so'nucintya|",
    "916:111": "vāsaṃ nṛpo vyādiśati sma tasmai",
    "916:112": "harmyodareṣveva na bhūpracāram||28||",
    "916:113": "tataḥ śarattoyadapāṇḍareṣu",
    "916:114": "bhūmau vimāneṣviva rañjiteṣu|",
    "916:115": "harmyeṣu sarvartusukhāśrayeṣu",
    "916:116": "strīṇāmudārairvijahāra tūryaiḥ||29||",
    "916:117": "kalairhi cāmīkarabaddhakakṣai-",
    "916:118": "rnārīkarāgrābhihatairmṛdaṅgaiḥ|",
    "916:119": "varāpsaronṛtyasamaiśca nṛtyaiḥ",
    "916:120": "kailāsavattadbhavanaṃ rarāja||30||",
    "916:121": "vāgbhiḥ kalābhirlīlataiśca hāvai-",
    "916:122": "rmadaiḥ sakhelairmadhuraiśca hāsaiḥ|",
    "916:123": "taṃ tatra nāryo ramayāṃbabhūvu-",
    "916:124": "rbhūvañcitairardhīnarīkṣitaiśca||31||",
    "916:125": "tataḥ sa kāmāśrayapaṇḍitābhiḥ",
    "916:126": "strībhirgṛhīto ratikarkaśābhiḥ|",
    "916:127": "vimānapṛṣṭhānna mahīṃ jagāma",
    "916:128": "vimānapṛṣṭhādiva puṇyakarmā||32||",
    "916:129": "nṛpastu tasyaiva vivṛddhiheto-",
    "916:130": "stadbhāvinārthena ca codyamānaḥ|",
    "916:131": "śame'bhireme virarāma pāpā-",
    "916:132": "dbheje damaṃ saṃvibabhāja sādhūn||33||",
    "916:133": "nādhīravatkāmasukhe sasañje",
    "916:134": "na saṃrarañje viṣamaṃ jananyām|",
    "916:135": "dhṛtyendriyāśvāṃścapalānvijigye",
    "916:136": "bandhūṃśca paurāṃśca guṇairjigāya||34||",
    "916:137": "nādhyaiṣṭa duḥkhāya parasya vidyāṃ",
    "916:138": "jñānaṃ śivaṃ yattu tadadhyagīṣṭa|",
    "916:139": "svābhyaḥ prajābhyo hi yathā tathaiva",
    "916:140": "sarvaprajābhyaḥ śivamāśaśaṃse||35||",
    "916:141": "bhaṃ bhāsuraṃ cāṅgirasādhidevaṃ",
    "916:142": "yathāvadānarca tadāyuṣe saḥ|",
    "916:143": "juhāva havyānyakṛśe kṛśānau",
    "916:144": "dadau dvijebhyaḥ kṛśanaṃ ca gāśca||36||",
    "916:145": "sasnau śarīraṃ pavituṃ manaśca",
    "916:146": "tīrthāmbubhiścaiva guṇāmbubhiśca|",
    "916:147": "vedopadiṣṭaṃ samamātmajaṃ ca",
    "916:148": "somaṃ papau śāntisukhaṃ ca hārdam||37||",
    "916:149": "sāntvaṃ babhāṣe na ca nārthavadya-",
    "916:150": "jjajalpa tattvaṃ na ca vipriyaṃ yat|",
    "916:151": "sāntvaṃ hyatattvaṃ paruṣaṃ ca tattvaṃ",
    "916:152": "hriyāśakannātmana eva vaktum||38||",
    "916:153": "iṣṭeṣvaniṣṭeṣu ca kāryavatsu",
    "916:154": "na rāgadoṣāśrayatāṃ prapede|",
    "916:155": "śivaṃ siṣeve vyavahāraśuddhaṃ",
    "916:156": "yajñaṃ hi mene na tathā yathā tat||39||",
    "916:157": "āśāvate cāhigatāya sadyo",
    "916:158": "deyāmbubhistarṣamacecchidiṣṭa|",
    "916:159": "yuddhādṛte vṛttaparaśvadhena",
    "916:160": "dviḍdarpamudvṛttamabebhidiṣṭa||40||",
    "916:161": "ekaṃ vininye sa jugopa sapta",
    "916:162": "saptaiva tatyāja rarakṣa pañca|",
    "916:163": "prāpa trivarga bubudhe trivarga",
    "916:164": "jajñe dvivarga prajahau dvivargam||41||",
    "916:165": "kṛtāgaso'pi pratipādya vadhyā-",
    "916:166": "nnājīghanannāpi ruṣā dadarśa|",
    "916:167": "babandha sāntvena phalena caitāṃ-",
    "916:168": "styāgo'pi teṣāṃ hyanayāya dṛṣṭaḥ||42||",
    "916:169": "ārṣāṇyacārītparamavratāni",
    "916:170": "vairāṇyahāsīccirasaṃbhṛtāni|",
    "916:171": "yaśāṃsi cāpadguṇagandhavanti",
    "916:172": "rajāṃsyahārṣīnmalinīkarāṇi||43||",
    "916:173": "na cājihīrṣidvalimapravṛttaṃ",
    "916:174": "na cācikīrṣitparavastvabhidhyām|",
    "916:175": "na cāvivakṣīd dviṣatāmadharma",
    "916:176": "na cāvivākṣīddhṛdayena manyum||44||",
    "916:177": "tasmiṃstathā bhūmipatau pravṛtte",
    "916:178": "bhṛtyāśca paurāśca tathaiva ceruḥ|",
    "916:179": "śamātmake cetasi viprasanne",
    "916:180": "prayuktayogasya yathendriyāṇi||45||",
    "916:181": "kāle tataścārupayodharāyāṃ",
    "916:182": "yaśodharāyāṃ svayaśodharāyām|",
    "916:183": "śauddhodane rāhusapatnavaktro",
    "916:184": "jajñe suto rāhula eva nāmnā||46||",
    "916:185": "atheṣṭaputraḥ paramapratītaḥ",
    "916:186": "kulasya vṛddhiṃ prati bhūmipālaḥ|",
    "916:187": "yathaiva putraprasave nananda",
    "916:188": "tathaiva pautraprasave nananda||47||",
    "916:189": "putrasya me putragato mameva",
    "916:190": "snehaḥ kathaṃ syāditi jātaharṣaḥ|",
    "916:191": "kāle sa taṃ taṃ vidhimālalambe",
    "916:192": "putrapriyaḥ svargamivārurukṣan||48||",
    "916:193": "sthitvā pathi prāthamakalpikānāṃ",
    "916:194": "rājavarṣabhāṇāṃ yaśasānvitānām|",
    "916:195": "śuklānyamuktvāpi tapāṃsyatapta",
    "916:196": "yajñaiśca hiṃsārahitairayaṣṭa||49||",
    "916:197": "ajājvaliṣṭātha sa puṇyakarmā",
    "916:198": "nṛpaśriyā caiva tapaḥśriyā ca|",
    "916:199": "kulena vṛttena dhiyā ca dīpta-",
    "916:200": "stejaḥ sahasrāṃśurivotsisṛkṣuḥ||50||",
    "916:201": "svāyaṃbhuvaṃ cārcikamarcayitvā",
    "916:202": "jajāpa putrasthitaye sthitaśrīḥ|",
    "916:203": "cakāra karmāṇi ca duṣkarāṇi",
    "916:204": "prajāḥ sisṛkṣuḥ ka ivādikāle||51||",
    "916:205": "tatyāja śastraṃ vimamarśa śāstraṃ",
    "916:206": "śamaṃ siṣeve niyamaṃ viṣehe|",
    "916:207": "vaśīva kaṃcidviṣayaṃ na bheje",
    "916:208": "piteva sarvānviṣayāndadarśa||52||",
    "916:209": "babhāra rājyaṃ sa hi putrahetoḥ",
    "916:210": "putraṃ kulārthaṃ yaśase kulaṃ tu|",
    "916:211": "svargāya śabdaṃ divamātmaheto-",
    "916:212": "rdharmārthamātmasthitimācakāṅkṣa||53||",
    "916:213": "evaṃ sa dharma vividhaṃ cakāra",
    "916:214": "sidbhirnipātaṃ śrutitaśca siddham|",
    "916:215": "dṛṣṭvā kathaṃ putramukhaṃ suto me",
    "916:216": "vanaṃ na yāyāditi nāthamānaḥ||54||",
    "916:217": "rirakṣiṣantaḥ śriyamātmasaṃsthāṃ",
    "916:218": "rakṣanti putrān bhuvi bhūmipālāḥ|",
    "916:219": "putraṃ narendraḥ sa tu dharmakāmo",
    "916:220": "rarakṣa dharmādviṣayeṣu muñcan||55||",
    "916:221": "vanamanupamasattvā bodhisattvāstu sarve",
    "916:222": "viṣayasukharasajñā jagmurutpannaputrāḥ|",
    "916:223": "ata upacitakarmā rūḍhamūle'pi hetau",
    "916:224": "sa ratimupasiṣeve bodhimāpanna yāvat||56||",
    "916:225": "iti buddhacarite mahākāvye",
    "916:226": "antaḥpuravihāro nāma dvitīyaḥ sargaḥ||2||"
}