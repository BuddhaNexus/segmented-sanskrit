{
  "SA20n1329:0": "bhūmipaṭalam",
  "SA20n1329:1": "eṣu yathāvarṇiteṣu trayodaśasu vihāreṣvanugatāḥ sapta bhūmayo veditavyāḥ |",
  "SA20n1329:2": "ṣaṭ bodhisattvabhūmayaḥ |",
  "SA20n1329:3": "ekā vyāmiśrā bodhisattva-tāthāgatī-bhūmiḥ |",
  "SA20n1329:4": "gotrabhūmiḥ |",
  "SA20n1329:5": "abhimukticaryābhūmiḥ śuddhādhyāśayabhūmiḥ |",
  "SA20n1329:6": "caryāpratipattibhūmiḥ |",
  "SA20n1329:7": "niyatā bhūmiḥ |",
  "SA20n1329:8": "niyatacaryābhūmiḥ |",
  "SA20n1329:9": "niṣṭhāgamanabhūmiśca itīmāḥ sapta bodhisattvabhūmayaḥ |",
  "SA20n1329:10": "āsāṃ paścimā vyāmiśrā |",
  "SA20n1329:11": "tatra gotravihāro'dhimukticaryāvihāraśca dve bhūmī |",
  "SA20n1329:12": "pramudito vihāraḥ śuddhādhyāśayā bhūmiḥ |",
  "SA20n1329:13": "adhiśīlādhicittavihārau trayaścādhiprajñavihārāḥ sābhogaśca nirnimitto vihāraścaryāpratipattibhūmiḥ |",
  "SA20n1329:14": "anābhogo nirnimitto vihāro niyatā bhūmiḥ |",
  "SA20n1329:15": "tasyāṃ bhūmau bodhisattvastṛtīyaniyatipātapatito bhavati |",
  "SA20n1329:16": "pratisaṃvidvihāro niyatacaryābhūmiḥ |",
  "SA20n1329:17": "paramo vihārastāthāgataśca niṣṭhāgamanabhūmiḥ |",
  "SA20n1329:18": "tāthāgatasya punarvihārasya bhūmeśca paścānnirdeśo bhaviṣyati buddhadharmapratiṣṭhā paṭale |",
  "SA20n1329:19": "tatra bodhisattvaḥ adhimukticaryābhūmeḥ śuddhādhyāśayabhūmimanupraviśan katham apāyānsamatikrāmati |",
  "SA20n1329:20": "iha bodhisattvo laukikaṃ pariśuddhaṃ dhyānaṃ niśrityādhimukticaryābhūmau susambhṛtabodhi sambhāro daśottareṇa pūrvanirdiṣṭenākāraśatena sattveṣvanukampāṃ bhāvayapyananyamanasikāraḥ |",
  "SA20n1329:21": "sa bhāvanānvayāt tadrūpaṃ sattveṣvanukampāśayaṃ karuṇāśayaṃ pratilabhate |",
  "SA20n1329:22": "yenāpāyān sattvānāmarthe'gārāvasāyogenādhitiṣṭhati |",
  "SA20n1329:23": "yadi me eṣveva sannivasato'nuttarā samyaksaṃbodhiḥ samudāgacchati tathāpyahamutsahāmīti sattvānāṃ duḥkhāpanayanahetoḥ |",
  "SA20n1329:24": "sarvāñca sattvānāmāpāyikaṃ karma tena śuddhenāśayenātmavaipākyamicchati |",
  "SA20n1329:25": "atyantañca sarvākuśalakarmāsamudācārāya mānaṃ saṃpraṇidhatte |",
  "SA20n1329:26": "tasya tathā paribhāvitaṃ tallaukikaṃ pariśuddhaṃ dhyānam |",
  "SA20n1329:27": "āpāyikakleśapakṣyaṃ dauṣṭhalyaṃ āśrayādapakarṣati |",
  "SA20n1329:28": "acireṇa tasya prahāṇādāśrayo'sya bodhisattvasya parivartate pāpakasyāpāyikasya karmaṇo'tyantamakaraṇatāyai apāyāgamanatāyai | ca |",
  "SA20n1329:30": "iyatā bodhisattvaḥ samatikrānto'pāyagatīḥ sarvā bhavati |",
  "SA20n1329:31": "samatikrāntaścādhimukticaryābhūmim |",
  "SA20n1329:32": "praviṣṭaśca śuddhādhyāśayabhūmim |",
  "SA20n1329:33": "ye ca te daśadharmā vihārapaṭale nirdiṣṭā |",
  "SA20n1329:34": "śraddhādayo vihārapariśodhanāḥ ta ihāpi bhūmiviśodhanā veditavyāḥ |",
  "SA20n1329:35": "teṣāṃ vipakṣapratipakṣato vyavasthānaṃ veditavyam |",
  "SA20n1329:36": "samāsārtho'nukramaśca veditavyaḥ |",
  "SA20n1329:37": "tatra daśeme |",
  "SA20n1329:38": "eṣāṃ daśānāṃ bhūmiviśodhanānāṃ dharmāṇāṃ vipakṣabhūtā dharmāḥ |",
  "SA20n1329:39": "yeṣāṃ pratipakṣeṇaiṣāṃ vyavasthānaṃ bhavati |",
  "SA20n1329:40": "katame daśa |",
  "SA20n1329:41": "sarveṇa sarvamanārambhacittotpādanā bodhisattvaśikṣāpadāsamādānam ayaṃ śraddhāvipakṣo dharmaḥ |",
  "SA20n1329:42": "yasya pratipakṣeṇa śraddhā |",
  "SA20n1329:43": "sattveṣu vihiṃsācittaṃ karuṇāvipakṣaḥ |",
  "SA20n1329:44": "yasya pratipakṣeṇa karuṇā |",
  "SA20n1329:45": "sattveṣu vyāpādo maitrīvipakṣaḥ |",
  "SA20n1329:46": "yasya pratipakṣeṇa maitrī |",
  "SA20n1329:47": "bhogajīvikāpekṣā dānavipakṣaḥ |",
  "SA20n1329:48": "yasya pratipakṣeṇa tyāgaḥ |",
  "SA20n1329:49": "sattvebhyo'pakāra-vipratipattilābho bahukartavyatā cākhedavipakṣaḥ |",
  "SA20n1329:50": "yasya pratipakṣeṇākhedatā |",
  "SA20n1329:51": "anupāyaprayogaḥ śāstrajñatā-vipakṣaḥ |",
  "SA20n1329:52": "yasya pratipakṣeṇa śāstrajñatā |",
  "SA20n1329:53": "asauratyāparacittānuvartanatā lokajñatā-vipakṣaḥ |",
  "SA20n1329:54": "yasya pratipakṣeṇa lokajñatā |",
  "SA20n1329:55": "kuśaladharmabhāvanāyāṃ pramādakausīdyaṃ hrīvyapatrāpya-vipakṣaḥ |",
  "SA20n1329:56": "yasya pratipakṣeṇa hrīvyapatrāpyatā |",
  "SA20n1329:57": "dīrghakālikaiścitraistīvrairnirantaraiḥ saṃsāraduḥkhairvyavadīraṇatā dhṛtibalādhānatā-vipakṣaḥ |",
  "SA20n1329:58": "tasya pratipakṣeṇa dhṛtibalādhānatā |",
  "SA20n1329:59": "śāstari kāṃkṣā vimatirvicikitsā tathāgatapūjopa sthānatāyāḥ vipakṣaḥ |",
  "SA20n1329:60": "yasya pratipakṣeṇa tathāgatapūjopasthānatā |",
  "SA20n1329:61": "evaṃ tāvadeṣāṃ vipakṣapratipakṣato vyavasthānaṃ bhavati |",
  "SA20n1329:62": "kaḥ punareṣāṃ samāsārthaḥ |",
  "SA20n1329:63": "samāsena daśabhirebhirdharmairāśayaśuddhiḥ prayogaśuddhiśca paridīpitā |",
  "SA20n1329:64": "tatra tribhiḥ pūrvakairāśayaśuddhiḥ |",
  "SA20n1329:65": "avaśiṣṭaiḥ prayogaśuddhirveditavyā |",
  "SA20n1329:66": "bodhimabhiśraddhadbodhisattvaḥ sattvān duḥkhitān karuṇāyate |",
  "SA20n1329:67": "karuṇāyamāno mayaite paritrātavyā iti maitrāyate |",
  "SA20n1329:68": "tathā maitracittasya sarvaparityāgī bhavatyeṣu bhogajīvitanirapekṣaḥ |",
  "SA20n1329:69": "nirapekṣaścaiṣāmarthe prayujyamāno na parikhidyate |",
  "SA20n1329:70": "aparikhinnaśca śāstrajño bhavati |",
  "SA20n1329:71": "śāstrajñaśca yathā loke pravartitavyamanena tathā jānāti |",
  "SA20n1329:72": "evaṃ lokajño bhavati |",
  "SA20n1329:73": "svayañca kleśasamudācāreṇa jehrīyate vyapatrapate |",
  "SA20n1329:74": "hrīmānapatrāpī ca kleśāvaśago dhṛtibaladhānaprāpto bhavati |",
  "SA20n1329:75": "dhṛtibalādhānaprāptaśca samyak prayogādaparihīyamānaḥ kuśalaiśca dharmairvivardhamānaḥ pratipattipūjayā lābhasatkārapūjayā ca tathāgatapūjopasthānaṃ karoti |",
  "SA20n1329:76": "ityayameṣāṃ daśānāṃ dharmāṇāmanukramasamudāgamo veditavyaḥ |",
  "SA20n1329:77": "ebhirdaśabhirdharmaiḥ sarvabhūmiviśodhanā bhavati |",
  "SA20n1329:78": "iti bodhisattvabhūmāvādhāre niṣṭhe yogasthāne tṛtīyaṃ bhūmipaṭalam |"
}