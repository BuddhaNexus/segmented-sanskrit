{
    "299:0": "3 prabhākarī nāma tṛtīyā bhūmiḥ |",
    "299:1": "upakramagāthāḥ |",
    "299:2": "evaṃ śruṇitva caribhūmimuttamāṃ",
    "299:3": "bodhisattvaviṣaye acintiyām |",
    "299:4": "harṣita jinasutāḥ sagauravāḥ",
    "299:5": "puṣpamegha nabhataḥ pramuñciṣuḥ || 1 ||",
    "299:6": "sādhu sādhu girisārasākaya (?)",
    "299:7": "deśito viduna śīlasaṃvaraḥ |",
    "299:8": "sarvasattvakaruṇāya āśayo",
    "299:9": "bhūmiśreṣṭha dvitiyāya gocaraḥ || 2 ||",
    "299:10": "bhūtatattva vitathāmananyathā",
    "299:11": "bodhisasattvacaraṇaṃ manoramam |",
    "299:12": "sarvalokahitaśaukhyacintanā",
    "299:13": "deśitaṃ tu paramaprabhāsvaram || 3 ||",
    "299:14": "bhūyu bhūyu naradevapūjitāṃ",
    "299:15": "bhūmiśreṣṭha tṛtiyāmudāhara |",
    "299:16": "dharmajñānakriyamukti sūcaya",
    "299:17": "yādṛśo'nubhava tādṛ(śo) gocaraḥ || 4 ||",
    "299:18": "dānaśīlacaraṇaṃ maharṣiṇāṃ",
    "299:19": "kṣāntivīryaśamaprajñupāyatām |",
    "299:20": "maitraśreṣṭha karuṇāya mārgaṇaṃ",
    "299:21": "bhāṣadhvaṃ jinacarīviśodhanam || 5 ||",
    "299:22": "vimukticandra uvāca vajragarbhaviśāradam |",
    "299:23": "tṛtīyā saṃkramantānāmāśayaṃ bhaṇa sūraṇa || 6 ||",
    "299:24": "upasaṃhāragāthāḥ |",
    "299:25": "te śuddhaāśaya guṇākara tīkṣṇacittā",
    "299:26": "nirviṇṇa rāgavigatā anivartiyāśca |",
    "299:27": "dṛḍhacitta taptadhṛtiyukti udāravegā",
    "299:28": "māhātmyatāśayavidū tṛtiyākramanti || 7 ||",
    "299:29": "atra sthitā vidu prabhākaribhūmideśe",
    "299:30": "duḥkhaṃ anityamaśuciṃ ca pralopadharmam |",
    "299:31": "acirasthitāka kṣaṇikaṃ ca nirodhakaṃ ca",
    "299:32": "vicinanti saṃskṛtagatīkamanāgatīkam || 8 ||",
    "299:33": "te rogabhūtasahaśokaparadevanaṃ ca",
    "299:34": "sopāyasaṃ ca priya apriyatānubaddham |",
    "299:35": "duḥkhadaurmanasyanilayaṃ jvalitāgnikalpaṃ",
    "299:36": "paśyanti saṃskṛtamananta samujjvalanti || 9 ||",
    "299:37": "udvigna sarva tribhave anapekṣacittā",
    "299:38": "jñānābhilāṣa sugatānamananyabuddhiḥ |",
    "299:39": "avicintiyaṃ atuliyaṃ asamantapāraṃ",
    "299:40": "saṃpaśyate nirupatāpa jināna jñānam || 10 ||",
    "299:41": "te buddhajñāna nirupadravamīkṣamāṇā",
    "299:42": "atrāṇa nātharahitā vrajate caranti |",
    "299:43": "nityaṃ daridra tribhiragnibhi saṃpradīptā",
    "299:44": "bhavacārake dukhaśatairvinibaddhacittāḥ || 11 ||",
    "299:45": "kleśāvṛtāśca avilokana chandahīnāḥ",
    "299:46": "sugatāna dharmaratanānupranaṣṭa bālāḥ |",
    "299:47": "saṃsārasrotaanuvāhina mokṣatrastā",
    "299:48": "me trāyitavya dṛḍha vīrya samārabhante || 12 ||",
    "299:49": "jñānābhilāṣa anapekṣa jagārthacārī",
    "299:50": "vyuparīkṣate katama hetu jagasya mokṣe |",
    "299:51": "nānyatra nāvaraṇajñāna tathāgatānāṃ",
    "299:52": "jñānaṃ ca prajñaprabhavaṃ sugatānanantam || 13 ||",
    "299:53": "prajñā śrutāttu iti cintayi bodhisattvo",
    "299:54": "jñātvā tamārabhati vīrya śrutārthacārī |",
    "299:55": "rātriṃdivaṃ śravaṇahetu ananyakarmā",
    "299:56": "arthārthiko bhavati dharmaparāyaṇaśca || 14 ||",
    "299:57": "maṇimuktiratnanilayān priyabāndhavāṃśca",
    "299:58": "rājyaṃ ananta vividhān pura sthānaśreṣṭhān |",
    "299:59": "bhāryāsutāṃśca parivāra manonukūlān",
    "299:60": "anapekṣacittu tyajate vidu dharmahetoḥ || 15 ||",
    "299:61": "śira hastapāda nayana svakamātmamāṃsaṃ",
    "299:62": "jihvā ca daṃṣṭra śrava nāsika śoṇitaṃ ca |",
    "299:63": "hṛdayaṃ tupādya priya majja parityajanti",
    "299:64": "nā duṣkaretamatha duṣkara yacchṛṇoti || 16 ||",
    "299:65": "yadi kaścidenamupagamya vadeyya evaṃ",
    "299:66": "yadi agnigarbha prapate jvalitāpi ghoram |",
    "299:67": "prāpiṣya dharmaratanaṃ sugatopanītaṃ",
    "299:68": "śrutvā adīnamanasaḥ prapate guṇārthī || 17 ||",
    "299:69": "ekasya dharmapada artha sumerumūrdhnā",
    "299:70": "trisahasra agnirucitaṃ api brahmalokāt |",
    "299:71": "sūdūrlabhā imi jinasya udārabodhiḥ",
    "299:72": "ye mānuṣyeṇa sukha labhyati evarūpam || 18 ||",
    "299:73": "yāvattareṇa pavararṣiṇa jñānalābha-",
    "299:74": "stāvattaraṃ dukhamavīcikamutsahyami |",
    "299:75": "kiṃ vā punarvividhamānuṣaduḥkhaskandhaṃ",
    "299:76": "hantābhyupemi varadharmipadārthiduḥkham || 19 ||",
    "299:77": "dharmaṃ ca śrutva puna yoniṣu cintayāti",
    "299:78": "dhyānāpramāṇa caturaśca tathā arūpyā |",
    "299:79": "pañcāpyabhijña pravarā abhinirharanti",
    "299:80": "nā cāpi teṣu vaśitā upapadya yāti || 20 ||",
    "299:81": "atra sthitā guṇadharā bahubuddhakoṭyaḥ",
    "299:82": "pūjyanti niścitamanā śṛṇuvanti dharmam |",
    "299:83": "tanubhūtva mithyapagatāḥ pariśuddhayanti",
    "299:84": "svarṇe yathā vigatadoṣa pramāṇatulyam || 21 ||",
    "299:85": "atra sthitā guṇadharāstridaśādhipatyaṃ",
    "299:86": "kārenti īśvara nivartitu kāmarāgāḥ |",
    "299:87": "marusaṃgha nekavividhān kuśalāna mārge",
    "299:88": "sthāpentyananyamana buddhaguṇābhilāṣe || 22 ||",
    "299:89": "atra sthitā jinasutā viriyārabhante",
    "299:90": "labdhvā samādhina sahasraśataṃ anūnam |",
    "299:91": "paśyanti buddhavara lakṣaṇacitrigātrāṃ",
    "299:92": "bhūyo ataḥ praṇidhiśreṣṭha guṇāpramāṇāḥ || 23 ||",
    "299:93": "ityeṣā tṛtiyā bhūminirdiṣṭā sugatātmajāḥ |",
    "299:94": "sarvalokahitaiṣīṇāṃ bodhisattvānanuttamā || 24 ||"
}