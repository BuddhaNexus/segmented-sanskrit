{
    "269:0": "āryatriratnānusmṛtisūtram",
    "269:1": "(kha) saṃskṛtapāṭhaḥ",
    "269:2": "bhāratīyabhāṣāyām-āryatriratnānusmṛtisūtram",
    "269:3": "bhoṭabhāṣāyām-phags-pā-dakon-mcchog-gsum-jes-su-ḍran-pāī-mdo",
    "269:4": "namaḥ sarvabuddhabodhisattvebhyaḥ",
    "269:5": "(buddhānusmṛtiḥ)",
    "269:6": "ityapi buddho bhagavāṃstathāgato'rhan samyaksaṃbuddho vidyācaraṇasampannaḥ sugato lokavidanuttaraḥ puruṣadamyasārathiḥ śāstā devamanuṣyāṇāṃ buddho bhagavāniti|",
    "269:7": "niṣyandaḥ sa tathāgataḥ puṇyānām,",
    "269:8": "avipraṇāśaḥ kuśalamūlānām,",
    "269:9": "alaṅkṛtaḥ kṣāntyā,",
    "269:10": "ālayaḥ puṇyanidhānānām,",
    "269:11": "citrito'nuvyañjanaiḥ kusumito lakṣaṇaiḥ,",
    "269:12": "pratirūpo gocareṇa,",
    "269:13": "apratikūlo darśanena,",
    "269:14": "abhiratiḥ śraddhā(śuddhā)",
    "269:15": "dhimuktānām,",
    "269:16": "anabhibhūtaḥ prajñayā,",
    "269:17": "anavamardanīyo balaiḥ,",
    "269:18": "śāstā sarvasattvānām,",
    "269:19": "pitā bodhisattvānām,",
    "269:20": "rājā āryapudgalānām,",
    "269:21": "sārthavāhaḥ nirvāṇanagarasamprasthitānām,",
    "269:22": "aprameyo jñānena,",
    "269:23": "acintyaḥ pratibhānena,",
    "269:24": "viśuddhaḥ svareṇa,",
    "269:25": "āsvadanīyo ghoṣeṇa,",
    "269:26": "asecanako rūpeṇa,",
    "269:27": "apratisamaḥ kāyena,",
    "269:28": "aliptaḥ kāmaiḥ,",
    "269:29": "anupalipto rūpaiḥ asaṃsṛṣṭa ārūpyaiḥ,",
    "269:30": "vipramuktaḥ skandhebhyaḥ,",
    "269:31": "visamprayukto dhātubhiḥ,",
    "269:32": "saṃvṛta āyatanaiḥ,",
    "269:33": "pracchinno granthaiḥ,",
    "269:34": "vimuktaḥ paridāghnaiḥ,",
    "269:35": "parimuktastṛṣṇayā,",
    "269:36": "oghāduttīrṇaḥ paripūrṇo jñānena,",
    "269:37": "pratiṣṭhito'tītānāgatapratyutpannānāṃ buddhānāṃ bhagavatāṃ jñāne,",
    "269:38": "apratiṣṭhito nirvāṇe,",
    "269:39": "sthito bhūtakoṭyām,",
    "269:40": "sthitaḥ sarvasattvālokanīyāyāṃ bhūmau,",
    "269:41": "sarva ime tathāgatānāṃ viśeṣataḥ samyag guṇāḥ|",
    "269:42": "(dharmānusmṛtiḥ)",
    "269:43": "saddharmastu ādau kalyāṇaḥ,",
    "269:44": "madhye kalyāṇaḥ,",
    "269:45": "paryavasāne kalyāṇaḥ,",
    "269:46": "svarthaḥ suvyañjanaḥ,",
    "269:47": "kevalaḥ,",
    "269:48": "paripūrṇaḥ,",
    "269:49": "pariśuddhaḥ,",
    "269:50": "paryavadātaḥ,",
    "269:51": "svākhyātaḥ bhagavato dharmaḥ,",
    "269:52": "sāndṛṣṭikaḥ,",
    "269:53": "nirjvaraḥ,",
    "269:54": "ākālikaḥ,",
    "269:55": "aupanāyikaḥ,",
    "269:56": "aihipaśyikaḥ,",
    "269:57": "pratyātmavedanīyo vijñaiḥ,",
    "269:58": "svākhyāto bhagavato dharmavinayaḥ supraveditaḥ nairyāṇikaḥ,",
    "269:59": "saṃbodhigāmī,",
    "269:60": "abhinnaḥ saṃstūpaḥ,",
    "269:61": "sapratiśaraṇaḥ,",
    "269:62": "chinnaplotikaḥ|",
    "269:63": "(saṃghānusmṛtiḥ)",
    "269:64": "supratipanno bhagavata āryasaṃghaḥ,",
    "269:65": "nyāyapratipannaḥ,",
    "269:66": "ṛjupratipannaḥ,",
    "269:67": "sāmīcīpratipannaḥ,",
    "269:68": "añjalīkaraṇīyaḥ,",
    "269:69": "sāmīcīkaraṇīyaḥ,",
    "269:70": "puṇyaśrīkṣetraḥ,",
    "269:71": "mahādakṣiṇāpariśodhakaḥ,",
    "269:72": "prāhavanīyaḥ,",
    "269:73": "āhavanīyaḥ|",
    "269:74": "|| āryatriratnānusmṛtisūtraṃ samāptam||"
}