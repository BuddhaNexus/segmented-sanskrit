{
  "XXmrtvstsu:0_0": "Mṛtyuvañcanasitatārāsādhana",
  "XXmrtvstsu:mvsts_1_0": "mṛtyudoṣair aliptaḥ syāt tārāhṛccakrabhāvakaḥ /",
  "XXmrtvstsu:mvsts_1_1": "lābhī ca sarvasiddhīnāṃ ṣaṇmāsāvadhi tatparaḥ //",
  "XXmrtvstsu:mvsts_2_0": "vāgīśvarakṛtādeśān mṛtyuvañcanasaṃgrahāt /",
  "XXmrtvstsu:mvsts_2_1": "uddhṛtā sitatārāyā bhāvanā bhayanāśinī //",
  "XXmrtvstsu:mvsts_3_0": "turyavargādyasākāratviṣā visphuritāmbare /",
  "XXmrtvstsu:mvsts_3_1": "sitābjendvāsanāṃ dṛṣṭvā puras triśaraṇaṃ paṭhet //",
  "XXmrtvstsu:mvsts_4_0": "muhūrtaṃ śūnyatāṃ paśyet prākṛtāropahānaye /",
  "XXmrtvstsu:mvsts_4_1": "tataḥ praṇidhisāmarthyād bodhicittākṣaraṃ bhavet //",
  "XXmrtvstsu:mvsts_5_0": "sitāravindamadhyasthacandrabimbāsanopari /",
  "XXmrtvstsu:mvsts_5_1": "ābaddhavajraparyaṅkāṃ varadotpaladhāriṇīm //",
  "XXmrtvstsu:mvsts_6_0": "śaraccandrakarākārāṃ pṛṣṭhacandrasamāśritām /",
  "XXmrtvstsu:mvsts_6_1": "sarvālaṅkārasaṃpūrṇāṃ ṣoḍaśābdavapuṣmatīm //",
  "XXmrtvstsu:mvsts_7_0": "sarvasaṃbuddhatatputramātaraṃ kāmarūpadhām /",
  "XXmrtvstsu:mvsts_7_1": "dhyātvāryatārāṃ hṛdaye tasyāś cakraṃ sitadyuti //",
  "XXmrtvstsu:mvsts_8_0": "aṣṭakoṣṭhakam aṣṭābhir akṣaraiḥ paripūritam /",
  "XXmrtvstsu:mvsts_8_1": "oṃhāvyañjanamadhyasthasādhyanāmādyanābhikam //",
  "XXmrtvstsu:mvsts_9_0": "dhyāyād ekāgracittaḥ san ṣaṇ māsān dṛḍhaniścayaḥ /",
  "XXmrtvstsu:mvsts_9_1": "japed akhinnacittaḥ san mantram enaṃ daśākṣaram //",
  "XXmrtvstsu:mvsts_10_0": "oṅkāram ādito dattvā paścāt tāre prayojayet /",
  "XXmrtvstsu:mvsts_10_1": "tuttāre syāt ture paścāt svāhāntaḥ sārvakarmikaḥ //",
  "XXmrtvstsu:mvsts_11_0": "brahmendraviṣṇucandrārkarudradikpālamanmathaiḥ /",
  "XXmrtvstsu:mvsts_11_1": "apy akhaṇḍitaromāgro mṛtyuṃ jayati muktavat //",
  "XXmrtvstsu:mvsts_12_0": "valīpalitadaurbhāgyavyādhidāridryasaṃkṣayaḥ /",
  "XXmrtvstsu:mvsts_12_1": "siṃhādyaṣṭamahābhītiduḥkhasaṃdohanāśanam //",
  "XXmrtvstsu:mvsts_13_0": "ayācitāmbarapānaharmyaratnādisaṃgamaḥ /",
  "XXmrtvstsu:mvsts_13_1": "khaḍgāñjanapādalepabhadrakumbhādisiddhayaḥ //",
  "XXmrtvstsu:mvsts_14_0": "kavitā vaktṛtā medhā prajñā caikāntanirmalā /",
  "XXmrtvstsu:mvsts_14_1": "anyā ca vāñchitā siddhiś cakrād asmāt prajāyate //",
  "XXmrtvstsu:mvsts_15_0": "sādhanaṃ sitatārāyā mṛtyuvyādhivināśanam /",
  "XXmrtvstsu:mvsts_15_1": "uddhṛtya yac chubhaṃ tena jagat tārā svayaṃ bhavet //",
  "XXmrtvstsu:1_0": "// mṛtyuvañcanasitatārāsādhanam //"
}