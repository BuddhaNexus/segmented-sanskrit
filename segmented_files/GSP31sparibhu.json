{
  "GSP31sparibhu:0": "sāṃkhyaparibhāṣā /",
  "GSP31sparibhu:1": "śrīgaṇeśāya namaḥ /",
  "GSP31sparibhu:2": "śrīdakṣiṇāmūrtigurubhyo namaḥ /",
  "GSP31sparibhu:3": "svānubhavaṃ yathāmati vyākhyāsyāmaḥ /",
  "GSP31sparibhu:4": "oṃ namo nārāyaṇāya prakṛtyai puruṣāya ca /",
  "GSP31sparibhu:5": "vedāntasāraguhyāya sāṅkhyatattvasvarūpiṇe // 1 //",
  "GSP31sparibhu:6": "yogināṃ parahaṃsānāṃ tattvajñānārthadarśanam /",
  "GSP31sparibhu:7": "anyeṣāṃ ca na dātavyaṃ māyayā mohitaṃ jagat // 2 //",
  "GSP31sparibhu:8": "śabdaśrotā ca vyājena nirvāṇārthaṃ ca kathyate /",
  "GSP31sparibhu:9": "yadā kaścinmahābhāgastasya viśrāntikārakam //",
  "GSP31sparibhu:10": "vibhaktimatra yo paśyettasya jñānaṃ ca dūrataḥ // 3 //",
  "GSP31sparibhu:11": "atha guruḥ /",
  "GSP31sparibhu:12": "guruyuktyā prasādena granthagarbhāvalokanam // 4 //",
  "GSP31sparibhu:13": "guruśca dvividhaḥ prokto vārttikāmnāya eva ca /",
  "GSP31sparibhu:14": "vārttiko bhaktibhāvena āmnāyo mūlakārikā // 5 //",
  "GSP31sparibhu:15": "kintu -",
  "GSP31sparibhu:16": "brāhmaṇastrīśūdramukhopāsyā ye te tu vārttikāḥ /",
  "GSP31sparibhu:17": "saṃnyāsādipāramparyeṇa sa āmnāyaḥ prakīrtitaḥ // 6 //",
  "GSP31sparibhu:18": "ādau śivastathā viṣṇurbrahmā vasiṣṭha eva ca /",
  "GSP31sparibhu:19": "śaktaḥ pārāśaro vyāsaḥ śuko gauḍastathaiva ca //",
  "GSP31sparibhu:20": "govindapādapūjyebhyaḥ śaṅkaraḥ śaṅkaro paraḥ /",
  "GSP31sparibhu:21": "iyaṃ paramparā proktā gurorāmnāyasiddhidā // 7 //",
  "GSP31sparibhu:22": "gururgāyatryupadeśo guruścodarapoṣakaḥ /",
  "GSP31sparibhu:23": "sadgururmokṣadātā ca gurostrividhalakṣaṇam // 8 //",
  "GSP31sparibhu:24": "mantrādhyayanaṃ ca vyākhyānaṃ karmatantrāni ceṭakāḥ /",
  "GSP31sparibhu:25": "vaidikī śilpavidyā ca śrīgurostasya ucyate // 9 //",
  "GSP31sparibhu:26": "kāryakāraṇatāṃ hitvā samādhiḥ pūrṇabodhakaḥ /",
  "GSP31sparibhu:27": "tārako mokṣadātā ca sadgurustasya ucyate // 10 //",
  "GSP31sparibhu:28": "atha śiṣyaḥ /",
  "GSP31sparibhu:29": "riktakāmaṃ mano dhṛtvā viśvāsaṃ gurubhaktidam /",
  "GSP31sparibhu:30": "āśāmokṣaṃ vinā nāsti tacchiṣyamuddharedguruḥ // 11 //",
  "GSP31sparibhu:31": "bho bho svāmin kṛpāsindho prārthayiṣyāmi te 'dhunā /",
  "GSP31sparibhu:32": "taptasaṃsāradāvāgnau muktiṃ kuru dayānidhe // 12 //",
  "GSP31sparibhu:33": "vidhivadadhītavedavedāṅgatvenāpātato 'rivalavedārthā asmin /",
  "GSP31sparibhu:34": "tathā ca śrutiḥ -",
  "GSP31sparibhu:35": "samitpāṇiḥ śrotriyaṃ brahmaniṣṭhaṃ gurumupaśritya tamanusarati //",
  "GSP31sparibhu:36": "taddhi saṃpraṇipātena paripraśnena sevayā //",
  "GSP31sparibhu:37": "upadekṣyanti te jñānaṃ jñāninastattvadarśinaḥ // 13 //",
  "GSP31sparibhu:38": "'yajjñātvā na punarmohaḥ'; iti gītāsu /",
  "GSP31sparibhu:39": "bhuktimicchasi cettāta viṣayānviṣavattyaja //",
  "GSP31sparibhu:40": "lolupaḥ sādhusaṅgasya atyantaṃ sukhamaśnute // 14 //",
  "GSP31sparibhu:41": "iti guruparamparā /",
  "GSP31sparibhu:42": "atha sāṃkhyasāmpradāyena jñānamāha /",
  "GSP31sparibhu:43": "tatra prathamaṃ sādhanacatuṣṭayasampannasya ihāmutrārthaphalabhogavirāgaḥ /",
  "GSP31sparibhu:44": "dvitīyaṃ śamadamādiṣaṭkam /",
  "GSP31sparibhu:45": "tṛtīyaṃ nityānityavastuvivekaḥ /",
  "GSP31sparibhu:46": "caturthaṃ mumukṣatvaṃ mokṣecchā /",
  "GSP31sparibhu:47": "kintu iha nāma srakcandanavanitādiviṣayabhogavirāgaḥ /",
  "GSP31sparibhu:48": "amutra nāma svargabhogādianicchā /",
  "GSP31sparibhu:49": "śamo nāma manonigrahaḥ /",
  "GSP31sparibhu:50": "dama indriyanigrahaḥ /",
  "GSP31sparibhu:51": "titikṣā śītoṣṇādiparotkarṣasahanam /",
  "GSP31sparibhu:52": "samādhānaṃ sṛṣṭyādimāyāvilakṣaṇam /",
  "GSP31sparibhu:53": "śraddhā gurāvadhyātmaśāstre ratiḥ /",
  "GSP31sparibhu:54": "uparamaḥ kāryakāraṇātītam /",
  "GSP31sparibhu:55": "nitya ātmā /",
  "GSP31sparibhu:56": "anityā dṛśyapadārthāḥ /",
  "GSP31sparibhu:57": "ataḥ paraṃ mokṣecchā //",
  "GSP31sparibhu:58": "iti sādhanacatuṣṭayam /",
  "GSP31sparibhu:59": "kambalo kharparī veṇurbuddhestrividhalakṣaṇam /",
  "GSP31sparibhu:60": "cittakṣiptagatāyatālīnatābhūmikātrayam // 1 //",
  "GSP31sparibhu:61": "atha bhūmikā /",
  "GSP31sparibhu:62": "vikṣeptā viṣayapadārthe ratiḥ /",
  "GSP31sparibhu:63": "gatāyātā saṃśayātmikā /",
  "GSP31sparibhu:64": "sulīnatā prītirūpā turīyā /",
  "GSP31sparibhu:65": "atha buddhayaḥ /",
  "GSP31sparibhu:66": "guruḥ śāstrādiyuktyā bodhayati tathāpi śūnyaṃ kambalapeśīvat /",
  "GSP31sparibhu:67": "sā adhikaprakāśo na bhavati kharparacchidravat /",
  "GSP31sparibhu:68": "anekayuktyā vistārayati bhagnaveṇuvat jale tailavat /",
  "GSP31sparibhu:69": "tatrādau vairāgyam /",
  "GSP31sparibhu:70": "tatra pramāṇaṃ śrutiḥ- na vā 're sarvasya kāmāya sarvaṃ priyaṃ bhavatyātmanastu kāmāya sarvaṃ priyaṃ bhavati iti /",
  "GSP31sparibhu:71": "bṛhadāraṇyake 'tyāgenaikena amṛtatvamānaśuḥ'; /",
  "GSP31sparibhu:72": "tatrādau śabalatyāgaḥ //",
  "GSP31sparibhu:73": "viṣṭhāmūtraṃ ca durgandhi kṛmyagāraṃ ca naśvaram /",
  "GSP31sparibhu:74": "tatsaukhyamānino mūḍhā ahaṃmametigarvitāḥ // 1 //",
  "GSP31sparibhu:75": "kasya mātā pitā kasya kasya bhrātā sahodaraḥ /",
  "GSP31sparibhu:76": "kasya strī kasya putrastu narāṇāṃ karmabandhanam // 2 //",
  "GSP31sparibhu:77": "jāyāpatyagṛjakṣetrasvajanadraviṇādiṣu /",
  "GSP31sparibhu:78": "udāsīnasamaṃ paśyetsarvaṃ vyarthamivātmani // 3 //",
  "GSP31sparibhu:79": "strīṇāṃ strīsaṅgināṃ saṅgaṃ tyaktvā dūrata ātmavān /",
  "GSP31sparibhu:80": "kṣamī vivikta āsīnaścintayenmāmatandritaḥ // 4 //",
  "GSP31sparibhu:81": "kāyāraṇyasamāviṣṭo manavyāghro mahābalī /",
  "GSP31sparibhu:82": "bhakṣate sakalāṃllokāndevānuragamānavān // 5 //",
  "GSP31sparibhu:83": "jñānakhaḍgaṃ dṛḍhaṃ kṛtvā vairāgyaṃ bhūmiśodhanam /",
  "GSP31sparibhu:84": "durlabho yasya saṃgrāmo ko 'sau śūraśca ātmavān // 6 //",
  "GSP31sparibhu:85": "atha śuddhatyāgaḥ /",
  "GSP31sparibhu:86": "granthamabhyasya medhāvī jñānavijñānatatparaḥ /",
  "GSP31sparibhu:87": "palālamiva dhānyārthī tyajedgranthamaśeṣataḥ // 7 //",
  "GSP31sparibhu:88": "padamicchasi brahmatvaṃ tadā vijñānataḥ śṛṇu /",
  "GSP31sparibhu:89": "sarvārtheṣu ca vairāgyaṃ sarvabhūteṣu cātmatā // 8 //",
  "GSP31sparibhu:90": "muktimicchasi cettvantu viṣayānviṣavattyaja /",
  "GSP31sparibhu:91": "kṣamārjavadayātoṣasatyaṃ pīyūṣavadbhaja // 9 //",
  "GSP31sparibhu:92": "manasā dhyāyate yogī kṛpaṇastu dhanaṃ yathā /",
  "GSP31sparibhu:93": "manasā yena pītvā ca tena jitvā jagattrayam // 10 //",
  "GSP31sparibhu:94": "vihāya kāmānyaḥ sarvānpumāṃścarati nispṛhaḥ /",
  "GSP31sparibhu:95": "nirmamo nirahaṅkāraḥ sa śāntimadhigacchati // 11 //",
  "GSP31sparibhu:96": "akiñcanaśca dāntaśca śāntaśca samamānasaḥ /",
  "GSP31sparibhu:97": "sa liṅgānāśramaṃ tyaktvā caredavidhigocaraḥ // 12 //",
  "GSP31sparibhu:98": "dehe ca śṛṇu taṃ tāta guptaprakaṭalakṣaṇam /",
  "GSP31sparibhu:99": "daśaguptakaraṃ mokṣadvādaśaṃ sahajasthitiḥ // 13 //",
  "GSP31sparibhu:100": "nirapekṣaṃ muniṃ śāntaṃ nirvairaṃ samadarśanam /",
  "GSP31sparibhu:101": "anuvrajyāmahaṃ nityaṃ pūyayedaṅghrireṇubhiḥ // 14 //",
  "GSP31sparibhu:102": "kadā śambho bhaviṣyāmi karmanirmūlanakṣamaḥ /",
  "GSP31sparibhu:103": "ekākī nispṛhaḥ śānto pāṇipātro digambaraḥ // 15 //",
  "GSP31sparibhu:104": "sarvadharmānparityajya māmekaṃ śaraṇaṃ vraja /",
  "GSP31sparibhu:105": "ahaṃ tvāṃ sarvapāpebhyo mokṣayiṣyāmi mā śucaḥ // 16 //",
  "GSP31sparibhu:106": "nirālambapadaṃ prāpya citte tatra layaṃ gate /",
  "GSP31sparibhu:107": "nivartante kriyāḥ sarvāḥ sa yogī nirguṇaḥ paraḥ // 17 //",
  "GSP31sparibhu:108": "viṣayendriyakāraṇamākarṣacittavibhramaḥ /",
  "GSP31sparibhu:109": "yathā bahusapatnīnāṃ luṭhanti patimekataḥ // 18 //",
  "GSP31sparibhu:110": "sādhu sādhu śṛṇu svārthamasthiyantrācca dūrataḥ /",
  "GSP31sparibhu:111": "asya bhāgakṛtā loke mamatvaṃ śvānavatkṛtam // 19 //",
  "GSP31sparibhu:112": "śṛṇu tāta dvayaṃ tyājyamāśā bhedastathaiva ca /",
  "GSP31sparibhu:113": "āśayā dīnatāṃ kṛtvā bhedaśca bhedavardhanam // 20 //",
  "GSP31sparibhu:114": "rodanahāsyakā ';",
  "GSP31sparibhu:115": "'nena piśācasthitimāśrayet /",
  "GSP31sparibhu:116": "asya saṅgaṃ sadā tyajya bhava cinmātra sarvadā // 21 //",
  "GSP31sparibhu:117": "chāyākāryaṃ yathā nāsti tathaivāyaṃ hi dehakaḥ /",
  "GSP31sparibhu:118": "tattvaṃ gṛharasaṃ tyajya paramāṃ sthitimāśraya // 22 //",
  "GSP31sparibhu:119": "goṣpadaṃ pṛthivī meruḥ sthāṇurākāśamudrikā /",
  "GSP31sparibhu:120": "tṛṇaṃ tribhuvanaṃ rāma vairāgyālaṃkṛtā kṛtiḥ /",
  "GSP31sparibhu:121": "manuṣyāṇāṃ sahasreṣu kaścidyatati siddhaye // 23 //",
  "GSP31sparibhu:122": "iti vairāgyam //",
  "GSP31sparibhu:123": "atha bhaktidvārā caturvidhā muktiḥ /",
  "GSP31sparibhu:124": "vedākṣarāṇāṃ sāyujyaṃ sarūpatāṃ salokatāmaśnute //",
  "GSP31sparibhu:125": "prathamaṃ cittaśuddhiṃ ca mānasaṃ pūjanadvayam /",
  "GSP31sparibhu:126": "tṛtīyaṃ ca sadā dhyānaṃ vyāpakaṃ ca caturthakam // 1 //",
  "GSP31sparibhu:127": "pañcamaṃ tu nirālambaṃ mokṣabhūmiryathākramam /",
  "GSP31sparibhu:128": "yatnena sādhayenmartyo tasya muktirna saṃśayaḥ // 2 //",
  "GSP31sparibhu:129": "japānuṣṭhānayordvārā cittaśuddhirvidhīyate /",
  "GSP31sparibhu:130": "paścāccaturvidhā muktiḥ śṛṇu sādhu dvijottama // 3 //",
  "GSP31sparibhu:131": "mānase lokasamprāptistatsadā ca samīpatā /",
  "GSP31sparibhu:132": "tathā tasya svarūpaṃ ca nirālambena śāśvatam // 4 //",
  "GSP31sparibhu:133": "ye ye yān yān yajandevāṃste catvāramokṣagāḥ /",
  "GSP31sparibhu:134": "ātmajñānaṃ vinā mokṣo na bhavetsaccidātmani // 5 //",
  "GSP31sparibhu:135": "kintu -",
  "GSP31sparibhu:136": "mānasaṃ nāma āsanasthāṃ sāvayavamūrttiṃ dhyāyet /",
  "GSP31sparibhu:137": "nivātadīpavatsvasthaṃ yathābuddhyā ṣoḍaśopacāraiḥ pūjayet /",
  "GSP31sparibhu:138": "tasya gacchatastiṣṭhataśca na samīpāvabhāsaḥ /",
  "GSP31sparibhu:139": "sa eva sarvabhūtasthaṃ svarūpaṃ paśyati /",
  "GSP31sparibhu:140": "tataḥ sāvakāśamiva bhāsate sā sāyujyatā /",
  "GSP31sparibhu:141": "iti caturvidhā upāsanā muktiḥ /",
  "GSP31sparibhu:142": "athādvaitabhaktiḥ /",
  "GSP31sparibhu:143": "sarveśvaramayaṃ bhaktirjñānaṃ cābhedadarśanam /",
  "GSP31sparibhu:144": "nirapekṣaṃ ca vairāgyaṃ muktaṃ nirviṣayaṃ manaḥ // 1 //",
  "GSP31sparibhu:145": "kintu cāṇḍālādibrahmaparyantaṃ sarvabhūteṣu īśvararūpaṃ bhāvayet /",
  "GSP31sparibhu:146": "yathārhaṃ ṣoḍaśopacāreṇa pūjayet /",
  "GSP31sparibhu:147": "sā bhaktiḥ na tu pratimā /",
  "GSP31sparibhu:148": "brahmādipipīlikāparyantaṃ svaśarīravadabhedaṃ jñātvā tajjñānaṃ paradehāhisvadehāvayamekīkṛtya sarvatra ekameva piṇḍamavadhārayet brahmādisthāvaraparyantamihāmutra nirāśā /",
  "GSP31sparibhu:149": "mukti nāma vṛttiśūnyam /",
  "GSP31sparibhu:150": "tatra pramāṇam -",
  "GSP31sparibhu:151": "sarvabhūteṣu yaḥ paśyedbhagavadbhāvamātmanaḥ /",
  "GSP31sparibhu:152": "bhūtāni ca bhavatyātmaleṣabhāgavatottamaḥ // 2 //",
  "GSP31sparibhu:153": "yadā bhūtapṛthakbhāvamekasthamanupaśyati /",
  "GSP31sparibhu:154": "tata eva ca vistāraṃ brahma sampadyate tadā // 3 //",
  "GSP31sparibhu:155": "prajahāti yadā kāmān sarvānpārtha manogatān /",
  "GSP31sparibhu:156": "ātmanyevātmanastuṣṭaḥ svapataḥ sa na khidyate // 4 //",
  "GSP31sparibhu:157": "gītāsu /",
  "GSP31sparibhu:158": "brahmādisthāvarānteṣu vairāgyaṃ yaddhi jāyate /",
  "GSP31sparibhu:159": "yathaiva kākaviṣṭhāyāṃ vairāgyaṃ taddhi nirmalam // 5 //",
  "GSP31sparibhu:160": "iti advaitabhaktiḥ /",
  "GSP31sparibhu:161": "atha vivekajñānanirṇayaḥ /",
  "GSP31sparibhu:162": "akrodhavairāgyajitendriyatvaṃ kṣamādayāśāntijanapriyatvam /",
  "GSP31sparibhu:163": "nirlobhadātā bhavamuktiheturjñānasya cihnaṃ daśalakṣaṇāni // 1 //",
  "GSP31sparibhu:164": "karma adhyātmatattvaṃ ca brahmajñānamataḥ param /",
  "GSP31sparibhu:165": "indraṃ catvāri vācyārthamātmalakṣaṃ sukhāvaham // 2 //",
  "GSP31sparibhu:166": "karmajñānī bhavejjīvaḥ puruṣo 'dhyātmasaṃjñakaḥ /",
  "GSP31sparibhu:167": "īśvarastattvavettā ca sarvaṃ brahmeti brahmatā // 3 //",
  "GSP31sparibhu:168": "varṇāśramaṃ ca dharmaṃ ca hotrādikarmatatparāḥ /",
  "GSP31sparibhu:169": "bhajanaṃ sarvabhūteṣu jñānaṃ ca karmasajñitam // 4 //",
  "GSP31sparibhu:170": "vairāgyādhyātmaśāstraṃ ca yasya māyā vinirgatā /",
  "GSP31sparibhu:171": "jijñāsā mananādhyāsaṃ jñānamadhyātmasaṃjñitam // 5 //",
  "GSP31sparibhu:172": "ālokya dharmasāṃkhyādidharmakarmakriyāvidhīḥ /",
  "GSP31sparibhu:173": "tadarthavyatirekeṇa tattvajñānaṃ tadocyate // 6 //",
  "GSP31sparibhu:174": "samādhiśabdavākyārthaṃ brahmākāratayā vṛtiḥ /",
  "GSP31sparibhu:175": "ekākī nispṛhaḥ śānto brahmajñānaṃ tadocyate // 7 //",
  "GSP31sparibhu:176": "vāco yasminnivartante liṅgaṃ galitasarvadhīḥ /",
  "GSP31sparibhu:177": "svayameva svarūpasthaṃ svamiva svaṃ virājate // 8 //",
  "GSP31sparibhu:178": "uktācāravihīnasya svabuddhirvartate 'khilam /",
  "GSP31sparibhu:179": "dravyādiviṣayasvārthānsa jīvo nīcaśabditaḥ // 9 //",
  "GSP31sparibhu:180": "sadācārarato nityaṃ dvandvātītaśca nispṛhaḥ /",
  "GSP31sparibhu:181": "śuṣkañcāpyaśanaṃ caiva puruṣastasya ucyate // 10 //",
  "GSP31sparibhu:182": "daṇḍakāśāyamātraṃ ca kāmakrodhavivarjitaḥ /",
  "GSP31sparibhu:183": "bhramarībhuktasantoṣamīśvarastasya ucyate // 11 //",
  "GSP31sparibhu:184": "digvāsaṃ ca svasaṃvedyamānandaṃ svaparaṃ na hi /",
  "GSP31sparibhu:185": "pāṇipātre ca yadbhuṃkte sa brahma rājate mahīm // 12 //",
  "GSP31sparibhu:186": "dehāntitaṃ sadākālaṃ varṇāśramavivarjitam /",
  "GSP31sparibhu:187": "yatkṛtaṃ tatsadācāramātmārāmo virājate // 13 //",
  "GSP31sparibhu:188": "iti",
  "GSP31sparibhu:189": "atha dharmaśāstre-",
  "GSP31sparibhu:190": "aniṣṭamiṣṭamiśraṃ ca trividhaṃ karmaṇaḥ phalam //",
  "GSP31sparibhu:191": "paśumiśrastathā jñānī siddhajñeyaṃ ca pañcakam /",
  "GSP31sparibhu:192": "etairlakṣaṇasaṃyuktaṃ vṛttibhedena kathyate // 14 //",
  "GSP31sparibhu:193": "uktvā uktvā ca kāryeṇa dravyaṃ ca sādhayettataḥ /",
  "GSP31sparibhu:194": "śiśnodararatāḥ svārthaṃ satpaśorlakṣaṇaṃ smṛtam // 15 //",
  "GSP31sparibhu:195": "yugācāreṇa vartante saṃmataṃ varṇamāśramam /",
  "GSP31sparibhu:196": "ātmasvārthaṃ na jānāti sa miśraṃ lakṣaṇaṃ smṛtam // 16 //",
  "GSP31sparibhu:197": "vedaśāstrārthasarvajño uktācāraśca tatparaḥ /",
  "GSP31sparibhu:198": "yathoktvā ca vadedvākyaṃ sa jñānī lakṣaṇocyate // 17 //",
  "GSP31sparibhu:199": "kāryaṃ ca anyathākartuṃ yadvaktuṃ tattu sādhayet /",
  "GSP31sparibhu:200": "sañcitārthānvadetprājñaḥ sa siddhirlakṣaṇocyate // 18 //",
  "GSP31sparibhu:201": "kāryakāraṇakartṛtvaṃ vihāya vicarenmahīm /",
  "GSP31sparibhu:202": "stunādapī nikāmī ca ānandaṃ jñeyalakṣaṇam // 19 //",
  "GSP31sparibhu:203": "iti nirvedajñānanirṇayaḥ /",
  "GSP31sparibhu:204": "dehavarṇāśrayā dharmā kalpanāvedanirmitāḥ /",
  "GSP31sparibhu:205": "tā hi nirmokavattyājyāḥ so 'hameko nirañjanaḥ // 20 //",
  "GSP31sparibhu:206": "tasmājjñānāttu kaivalyamityādiśruteḥ jñānāgnidagdhakarmāṇīti gītā /",
  "GSP31sparibhu:207": "parokṣaṃ śāstriyajñānamaparokṣaṃ ca śāśvatam /",
  "GSP31sparibhu:208": "prathamaṃ janmakarmāṇi dvitīyaṃ saccidātmakam // 21 //",
  "GSP31sparibhu:209": "utpattisthitisaṃhārabhūtaṃ bhūteṣu yujyate /",
  "GSP31sparibhu:210": "ātmā ca tatra sākṣī ca jagaddraṣṭā ca sūryavat // 22 //",
  "GSP31sparibhu:211": "bhūtādivyaktirūpaṃ ca acaraṃ carameva ca /",
  "GSP31sparibhu:212": "tadindrajālavatpaśyedyathā nu vīcivajjagat // 23 //",
  "GSP31sparibhu:213": "kalpanābaddhajantuśca sadā jalpati doṣavat /",
  "GSP31sparibhu:214": "vapurnṛtyati rathyāyāṃ yāvatpatati bhūtale // 24 //",
  "GSP31sparibhu:215": "jano bālapiśācatvaṃ kiṃ lajjāyogivṛndinām /",
  "GSP31sparibhu:216": "jalpanti vividhā vāco kimarthaṃ sukhaduḥkhayoḥ // 25 //",
  "GSP31sparibhu:217": "asti bhāti priyaṃ sthiramasthiraṃ nāma rūpakam /",
  "GSP31sparibhu:218": "catvāra īṣaṇā tyājyāḥ sohameko nirañjanaḥ // 26 //",
  "GSP31sparibhu:219": "mātṛkādhvanirūpā ca vartate viśvamāyayā /",
  "GSP31sparibhu:220": "jānīhi tatra tannādaṃ vyartho 'rthaḥ pratipadyate // 27 //",
  "GSP31sparibhu:221": "amanastu sadā deho yathā grāmo vinā janāt /",
  "GSP31sparibhu:222": "brahmādyopi na karttavyaḥ sa paśuścātmaghātakaḥ // 28 //",
  "GSP31sparibhu:223": "uttamā ca laye līnā dhyānadhāraṇamadhyamāḥ /",
  "GSP31sparibhu:224": "adhamā pratimāpūjā gītanṛtyaṃ dhamodhamaḥ // 29 //",
  "GSP31sparibhu:225": "snānaṃ mano malatyāgaḥ śaucamindriyanigrahaḥ /",
  "GSP31sparibhu:226": "abhedadarśanaṃ jñānaṃ dhyānaṃ nirviṣayaṃ manaḥ // 30 //",
  "GSP31sparibhu:227": "sthūlapeśivat pratyakṣaṃ liṅgaṃ vandhyaṃ yathā striyaḥ /",
  "GSP31sparibhu:228": "manasātmaikarūpeṇa svayaṃ brahma sanātanam // 31 //",
  "GSP31sparibhu:229": "śrutismṛtyarthapūrṇaṃ ca samādheścittasaurabham /",
  "GSP31sparibhu:230": "yāvaddehābhimānaṃ ca tāvatyo niṣphalā kriyāḥ // 32 //",
  "GSP31sparibhu:231": "saṃsārakarma āsakto brahmāhamiti manyate /",
  "GSP31sparibhu:232": "karmabrahmobhayabhraṣṭastaṃ tyajedantyajaṃ yathā // 33 //",
  "GSP31sparibhu:233": "samādhervikṣepo yasya nānāyuktiprakārakaḥ /",
  "GSP31sparibhu:234": "yāvaddehalayaṃ naitāvanto mohakārakāḥ // 34 //",
  "GSP31sparibhu:235": "ekosau yogavāsī ca dvayaṃ grāmastathaiva ca /",
  "GSP31sparibhu:236": "tṛtīyaṃ nagaraṃ caiva manye yadvanavāsinām // 35 //",
  "GSP31sparibhu:237": "vedaśāstrapurāṇāni nānāyuktiṃ ca valgunā /",
  "GSP31sparibhu:238": "vyavasayātmikā buddhirna tu sādhanarūpakā // 36 //",
  "GSP31sparibhu:239": "āloḍya caturo vedān sarvaśāstrāṇi sarvadā /",
  "GSP31sparibhu:240": "yo vai tattvaṃ na jānāti darvīpākarasaṃ yathā // 37 //",
  "GSP31sparibhu:241": "śabdabrahmaṇi niṣṇāto snāyātsa parame yadi /",
  "GSP31sparibhu:242": "śramastasya śramaphalaṃ hyadhenuriva rakṣakaḥ // 38 //",
  "GSP31sparibhu:243": "ākāśadarpaṇe yasminyajjagadbhāsate 'khilam /",
  "GSP31sparibhu:244": "tatsarvaṃ brahmarūpaṃ ca māyāmayaviceṣṭitam // 39 //",
  "GSP31sparibhu:245": "yā niśā sarvabhūtānāṃ tasyāṃ jāgarti saṃyamī /",
  "GSP31sparibhu:246": "yasyāṃ jāgarti bhūtāni sā niśā paśyato muneḥ // 40 //",
  "GSP31sparibhu:247": "nāhaṃ deho na ca prāṇo nendriyāṇi tathaiva ca /",
  "GSP31sparibhu:248": "na mano hanta buddhiśca naiva cittamahaṅkṛtiḥ // 41 //",
  "GSP31sparibhu:249": "nāhaṃ manuṣyo na ca deva yakṣo na brāhmaṇaḥ kṣatriyavaiśyaśūdraḥ /",
  "GSP31sparibhu:250": "na brahmacārī na gṛhī vanastho bhikṣurna cāhaṃ nijabodharūpaḥ // 42 //",
  "GSP31sparibhu:251": "kāryakāraṇaceṣṭā ca trividhaṃ kalpanākṛtam /",
  "GSP31sparibhu:252": "manohaṅkārasaṃyuktaṃ vyarthaṃ ca śabdamālikā // 43 //",
  "GSP31sparibhu:253": "śabde śabdasya jñānārthaṃ yogī vadati nispṛhaḥ /",
  "GSP31sparibhu:254": "yathā vādyeṣu nādaśca pāratantryeṇa vartate // 44 //",
  "GSP31sparibhu:255": "yogī ca sarvakāryāṇi vartate dehakarmaṇi /",
  "GSP31sparibhu:256": "kaumāraṃ krīḍanaṃ caiva sarvaṃ mithyaiva kāraṇam // 45 //",
  "GSP31sparibhu:257": "yadyāvatkriyate jantuḥ svagṛhe rājate pumān /",
  "GSP31sparibhu:258": "yo yo yasya yathā bhāvastattateṣāṃ ca saukhyatā // 46 //",
  "GSP31sparibhu:259": "tatkāmopaceṣṭitam sarvaṃ vṛthā bhavati āyatau /",
  "GSP31sparibhu:260": "na cāsya kriyā kācinneha nānāsti karhicit // 47 //",
  "GSP31sparibhu:261": "ahaṃ ceṣṭa ito dehe sarvakarmasu ceṣṭate /",
  "GSP31sparibhu:262": "iti jñānaṃ vijānīyādyajjñānaṃ smaraṇena hi // 48 //",
  "GSP31sparibhu:263": "taḍāgaḥ pūrṇato yena yaddātuṃ balaṃ rājate /",
  "GSP31sparibhu:264": "kiṃcicchidreṇa ādyaṃ ca manasātmodakakriyāḥ // 49 //",
  "GSP31sparibhu:265": "bandhaṃ vihāya pūrṇāni kurvantu svasthamānasam /",
  "GSP31sparibhu:266": "ye hi yuktiṃ sadābhyāsātsa vai jñānottamottamaḥ // 50 //",
  "GSP31sparibhu:267": "dehādisarvakarmāṇi jñānājñāneṣu jñāyase /",
  "GSP31sparibhu:268": "so 'haṃ cinmātrarūpeṇa jānīhi brahmalakṣaṇam // 51 //",
  "GSP31sparibhu:269": "ahaṃ mūrkhamahaṃ jñātā yo dharmaḥ pratipādyate /",
  "GSP31sparibhu:270": "so 'haṃ cinmātrarūpeṇa jānīhi brahmalakṣaṇam // 52 //",
  "GSP31sparibhu:271": "bhidyate hṛdayagranthiśchidyante sarvasaṃśayāḥ /",
  "GSP31sparibhu:272": "kṣīyante cāsya karmāṇi yasmin dṛṣṭe parāvare // 53 //",
  "GSP31sparibhu:273": "jagadvilakṣaṇaṃ brahma brahmaṇo 'nyanna kiñcana /",
  "GSP31sparibhu:274": "brahmaṇyābhāti cinmithyā yathā marumarīcikā // 54 //",
  "GSP31sparibhu:275": "jñānāmṛtena tṛptasya kṛtakṛtyasya yoginaḥ /",
  "GSP31sparibhu:276": "na cāsti kiñcitkartavyamasti cenna sa sattvavit // 55 //",
  "GSP31sparibhu:277": "na tvaṃ viprādiko varṇo nāśramī nākṣagocaraḥ /",
  "GSP31sparibhu:278": "asaṅgo 'si nirākāro viśvasākṣī sukhī bhava // 56 //",
  "GSP31sparibhu:279": "dehābhimānagalite vidite ca cidātmani /",
  "GSP31sparibhu:280": "yatra yatra mano yāti tatra tatra samādhayaḥ // 57 //",
  "GSP31sparibhu:281": "ātmaikabhāvaniṣṭhasya yā yā ceṣṭāstadarcanam /",
  "GSP31sparibhu:282": "yo yo jalpaḥ sa saṃmantrastaddhyānaṃ ca nirīkṣaṇam // 58 //",
  "GSP31sparibhu:283": "na saṃkalpavikalpasya na līnopādhivāsanāḥ /",
  "GSP31sparibhu:284": "nijasvarūpe nirmagnaḥ sa yogī paratattvavit // 59 //",
  "GSP31sparibhu:285": "dehādisarvendriyāṇi sattāmātreṇa ceṣṭate /",
  "GSP31sparibhu:286": "yathā dīpe prapaṃcasya cuṃbakaṃ lohameva ca // 60 //",
  "GSP31sparibhu:287": "dehadvayaṃ tathā nāma varṇāśramā ca vyarthatā /",
  "GSP31sparibhu:288": "mahīākāśabrahmāhamalametatsamādhinā // 61 //",
  "GSP31sparibhu:289": "avyaktasya kathaṃ dhyānaṃ vyāpakasya visarjanam /",
  "GSP31sparibhu:290": "amūrtasya kathaṃ pūjā svayaṃ brahma sanātanam // 62 //",
  "GSP31sparibhu:291": "phalasya kāraṇaṃ puṣpaṃ phale puṣpaṃ vinaśyati /",
  "GSP31sparibhu:292": "jñānasya kāraṇaṃ karma jñāne karma vinaśyati // 63 //",
  "GSP31sparibhu:293": "kiṃ karomi kva gacchāmi kiṃ gṛhṇāmi tyajāmi kim /",
  "GSP31sparibhu:294": "ātmanā pūritaṃ sarva mahākalpāṃbunā yathā // 64 //",
  "GSP31sparibhu:295": "bhūtādivyaktirūpaṃ ca acaraṃ carameva ca /",
  "GSP31sparibhu:296": "tadindrajālavatpaśyedyathāmbuvīcivajjagat // 65 //",
  "GSP31sparibhu:297": "śabdabhāgadvayaṃ kṛtvā vyartho jñānārthayoginam /",
  "GSP31sparibhu:298": "kadācidvaktuṃ jñānārthaṃ vyartho vaktuṃ na śakyate // 66 //",
  "GSP31sparibhu:299": "garvaṃ no vahate na nindanti parānno bhāṣate niṣṭhuraṃ",
  "GSP31sparibhu:300": "proktaṃ kenacidapriyaṃ ca hasate krodhaṃ ca nālambate /",
  "GSP31sparibhu:301": "śrutvā kāvyamalakṣaṇaṃ parakṛtaṃ santiṣṭhate mūkava-",
  "GSP31sparibhu:302": "ddoṣānnādadate svayaṃ na kurute caitatsatāṃ lakṣaṇam // 67 //",
  "GSP31sparibhu:303": "bījamadhye yathā vṛkṣaṃ vṛkṣamadhye ca bījatā /",
  "GSP31sparibhu:304": "vyāpyavyāpakasarvātmā sa pṛthak naiva dṛśyate // 68 //",
  "GSP31sparibhu:305": "ekātmā sarvabhūteṣu bandhamokṣaḥ kathaṃ dvidhā /",
  "GSP31sparibhu:306": "janmasaṃskārayogena bhinnatvaṃ varttate sadā // 69 //",
  "GSP31sparibhu:307": "pratibimbayathopādhiṃ dīrghantiryak ca varttulam /",
  "GSP31sparibhu:308": "tasmādvilakṣaṇo jīvaḥ kathamekaṃ bhaviṣyati // 70 //",
  "GSP31sparibhu:309": "yathā yonistathācārapūrvakarmmānusārataḥ /",
  "GSP31sparibhu:310": "tattajjñānādhikāreṇa dvividhā bandhamokṣayoḥ // 71 //",
  "GSP31sparibhu:311": "yathāyamalamutpattiṃ prārabdhaṃ vividhākṛtam /",
  "GSP31sparibhu:312": "tathaiva sukhaduḥkhāni kathaṃ bhavati ekatā // 72 //",
  "GSP31sparibhu:313": "dravyaṃ na bhakṣayetprājñaḥ svadravyaṃ naiva poṣayet /",
  "GSP31sparibhu:314": "santuṣṭaḥ sarvadā nityaṃ sa naro jñānavānbhavet // 73 //",
  "GSP31sparibhu:315": "śarīraṃ naśvaraṃ sarvaṃ sambandhaḥ kintu śāśvataḥ /",
  "GSP31sparibhu:316": "vayasā sūtramārgeṇa yathā sthāneṣu gacchati // 74 //",
  "GSP31sparibhu:317": "yathā paragṛhe vāso mārgasthaṃ kurute sadā /",
  "GSP31sparibhu:318": "tathaiva sukhaduḥkhena na spṛśet jñānino naraḥ // 75 //",
  "GSP31sparibhu:319": "naṭī ca naṭanāṭyaṃ ca nānākrīḍā ca rañjanam /",
  "GSP31sparibhu:320": "ahaṃ pratyayajānāti tathaiva jño sadā naraḥ // 76 //",
  "GSP31sparibhu:321": "iti jñānanirṇayaḥ /",
  "GSP31sparibhu:322": "atha śrotā uvāca /",
  "GSP31sparibhu:323": "idaṃ kiṃ dṛśyate kena kathaṃ jātam ?",
  "GSP31sparibhu:324": "taṃ hovāca-",
  "GSP31sparibhu:325": "prathama anādivastu caitanya ātmā /",
  "GSP31sparibhu:326": "tasya sphuraṇaṃ jātaṃ sa imamevātmānaṃ dvidhā pātayettataḥ /",
  "GSP31sparibhu:327": "patiśca patnī cābhavatāmiti bṛhadāraṇye /",
  "GSP31sparibhu:328": "tattvamasīti yasmin tripadāni bhavanti /",
  "GSP31sparibhu:329": "tat tvaṃ asi /",
  "GSP31sparibhu:330": "brahmāhamasmīti sakalabrahmāntaṃ niśvasitam /",
  "GSP31sparibhu:331": "atha tatsarvaṃ tvameva /",
  "GSP31sparibhu:332": "idamāścaryam /",
  "GSP31sparibhu:333": "tarhi citta ekāgram atisūkṣmataraṃ kuru /",
  "GSP31sparibhu:334": "paramarthamityuktam /",
  "GSP31sparibhu:335": "ātmā 'yaṃ gururacaladharmavyāpakatvāditi / atha-",
  "GSP31sparibhu:336": "andhaḥ paṅgurasaṅge ca saṅgātkarma pratiṣṭhitam /",
  "GSP31sparibhu:337": "yatra paṅgusvatantratvaṃ tatrāndho niḥphalo bhavet // 1 //",
  "GSP31sparibhu:338": "andhātītaṃ bhavetpaṅguracalaṃ ca sanātanam /",
  "GSP31sparibhu:339": "sabāhyābhyantaraṃ bhūtaṃ yathākāśaṃ ca dṛśyate // 2 //",
  "GSP31sparibhu:340": "kintu māyā andhā avivekitvāt /",
  "GSP31sparibhu:341": "ubhayorekībhūtvā mithyā jīveśvarau vyājenāpi brahmāṇḍayoḥ /",
  "GSP31sparibhu:342": "sṛṣṭinirmitāḥ /",
  "GSP31sparibhu:343": "tasmānmāyāparityāgena svayameva cidākāśe ca vartate /",
  "GSP31sparibhu:344": "tatra pramāṇaṃ śrutiḥ /",
  "GSP31sparibhu:345": "ākāśa ātmā khaṃ brahma /",
  "GSP31sparibhu:346": "atha jīveśvarayorlakṣaṇam /",
  "GSP31sparibhu:347": "tatra pramāṇaṃ śrutiḥ /",
  "GSP31sparibhu:348": "dvā suparṇā sayujā sakhāyā samānaṃ vṛkṣaṃ pariṣasvajāte /",
  "GSP31sparibhu:349": "tayoranyaḥ pippalaṃ svādvattyanaśnannanyo abhicākaśīti /",
  "GSP31sparibhu:350": "atha vedeti /",
  "GSP31sparibhu:351": "kāryopādicaitanyaṃ jīvaśabdavācyam /",
  "GSP31sparibhu:352": "kāraṇopādhicaitanyam īśvaraśabdavācyam /",
  "GSP31sparibhu:353": "kāryopādhirayaṃ jīvaḥ kāraṇopādhirīśvaraḥ /",
  "GSP31sparibhu:354": "kāryakāraṇatāṃ hitvā pūrṇabobho vidhīyate // 3 //",
  "GSP31sparibhu:355": "tatra kāryaṃ nāma ahaṅkārādisṛṣṭivyāpāraḥ kāraṇaṃ nāma sākṣī hyantaḥsphuraṇam /",
  "GSP31sparibhu:356": "iti vedānte /",
  "GSP31sparibhu:357": "upadraṣṭānumantā ca bharttā bhoktā maheśvaraḥ /",
  "GSP31sparibhu:358": "paramātmeti cāpyukto dehe 'sminpuruṣaḥ paraḥ // 4 //",
  "GSP31sparibhu:359": "iti īśvaraḥ /",
  "GSP31sparibhu:360": "puruṣaḥ prakṛtistho hi bhuṅkte prakṛtijān guṇān /",
  "GSP31sparibhu:361": "kāraṇaṃ guṇasaṃyogo 'sya sadasadyonijanmasu // 1 //",
  "GSP31sparibhu:362": "iti jīvaḥ /",
  "GSP31sparibhu:363": "mukhābhāsako darpaṇe dṛśyamāno",
  "GSP31sparibhu:364": "mukhatvāpṛthak te na hi vā 'sti vastu //",
  "GSP31sparibhu:365": "cidābhāsako 'dhīśajīvo 'pi tadvat",
  "GSP31sparibhu:366": "sa nityopalabdhisvarūpo 'hamātmā // 1 //",
  "GSP31sparibhu:367": "iti hastāmale /",
  "GSP31sparibhu:368": "salila eko iṣṭādvaito bhavati /",
  "GSP31sparibhu:369": "iti bṛhadāraṇye /",
  "GSP31sparibhu:370": "tathā bimbapratibimbanyāyena jīveśvarau kalpitau /",
  "GSP31sparibhu:371": "tajjīvasya mokṣasādhanamāha karmaparaṃ aharahaḥ sandhyāmupāsitā yāvajjīvamagnihotraṃ juhuyāt /",
  "GSP31sparibhu:372": "jyotiṣṭomau svargakāmo yajet /",
  "GSP31sparibhu:373": "oṃmiti brahma /",
  "GSP31sparibhu:374": "omitīdaoṃ sarvam /",
  "GSP31sparibhu:375": "omityagnihotramanujānāti /",
  "GSP31sparibhu:376": "iti karma /",
  "GSP31sparibhu:377": "atha jñānaparam /",
  "GSP31sparibhu:378": "na karmaṇā na prajayā dhanena tyāgenaike amṛtatvamānaśuḥ /",
  "GSP31sparibhu:379": "prathamamāyāśabalasṛṣṭyādiputrakalatradravyādvilakṣaṇaḥ /",
  "GSP31sparibhu:380": "dvitīyaṃ sthūlasūkṣmādiśarīrasya vilakṣaṇam /",
  "GSP31sparibhu:381": "tṛtīyaṃ kevalamokṣasaṅkalpaḥ /",
  "GSP31sparibhu:382": "yathā śukanālakānyāyena mithyārajjusarppe bhramamāṇe sati tasya mokṣasādhanamāha /",
  "GSP31sparibhu:383": "tatra jīvasvarūpaṃ lakṣaṇaṃ dṛṣṭisambandhena sūryaprabhayā pratibhāti tadvāsanā mahad hṛdi granthiḥ /",
  "GSP31sparibhu:384": "iti jīvalakṣaṇam /",
  "GSP31sparibhu:385": "jīvasya mokṣakāmāya trivargaṃ ca purā kṛtam /",
  "GSP31sparibhu:386": "karma pātañjaliṃ sāṅkhyaṃ tatsamāsena kathyate // 1 //",
  "GSP31sparibhu:387": "pañcabhūtātmikā pūjā vidhireṣa samāśṛṇu /",
  "GSP31sparibhu:388": "trayaṃ karma pūjāyogyaṃ vā yo pātañjale smṛtaḥ // 2 //",
  "GSP31sparibhu:389": "dvayaṃ dehābhimānena ekaṃ nāhaṃ ca sāṃkhyatā /",
  "GSP31sparibhu:390": "ahaṃ nāhaṃ dvayaṃ śabdabandhamokṣaṃ ca kārakam // 3 //",
  "GSP31sparibhu:391": "tathā ca śrutiḥ /",
  "GSP31sparibhu:392": "athāto dharmajijñāsā /",
  "GSP31sparibhu:393": "athāto brahmajijñāsā /",
  "GSP31sparibhu:394": "pūrvapūrvaśrutiyuktyānubhavābhāsānāmuttarottaraśrutiyuktānubhavābhāsabodhadarśanāt /",
  "GSP31sparibhu:395": "sāmānyaśāstraṃ syānnyūnaṃ viśeṣo balavānbhavet /",
  "GSP31sparibhu:396": "pareṇa pūrvabādho vā prāyaśo dṛśyatāmiha // 4 //",
  "GSP31sparibhu:397": "iti vedānte karmaparam /",
  "GSP31sparibhu:398": "jñānādeva tu kaivalyamityādiśruteḥ /",
  "GSP31sparibhu:399": "na hi jñānena sadṛśaṃ pavitramiha vidyate /",
  "GSP31sparibhu:400": "jñānāgnidagdhakarmāṇi /",
  "GSP31sparibhu:401": "udarāḥ sarva evaite jñānī tvātmaiva me matam /",
  "GSP31sparibhu:402": "iti jñānaparam /",
  "GSP31sparibhu:403": "atha vedoktakarmayogaḥ /",
  "GSP31sparibhu:404": "varṇāśramaṃ ca dharmaṃ ha vedādividhipūrvakam /",
  "GSP31sparibhu:405": "tacca sādhyamasādhyaṃ vā janmakarmaphalapradam // 1 //",
  "GSP31sparibhu:406": "jyotiṣṭome bhavetsargaḥ śrotā syāditi karmaṇi /",
  "GSP31sparibhu:407": "niṣedhavidhinighnāni na bhavanmokṣasiddhidam // 2 //",
  "GSP31sparibhu:408": "japānuṣṭhānayordvārā devatānugraho bhavet /",
  "GSP31sparibhu:409": "tatsakāśādbhavet siddhiścaitanyopādhivarjitā // 3 //",
  "GSP31sparibhu:410": "tatra bhūtapūjā /",
  "GSP31sparibhu:411": "pārthivasthāvarāditīrthayātrā agnihotrajvālāmukhīyāgādi /",
  "GSP31sparibhu:412": "āpaḥ gaṅgāyāḥ naimiṣāraṇyādijalapūjā / tathā ca-",
  "GSP31sparibhu:413": "saṃhitā brāhmaṇāraṇyaṃ dvandvadīkṣā nighaṇṭakam /",
  "GSP31sparibhu:414": "jyotiṣaṃ ca niruktaṃ ca daśagranthāni sūtrakam // 4 //",
  "GSP31sparibhu:415": "ekayā liṅgagranthyā ca baddhyate sakalaṃ jagat /",
  "GSP31sparibhu:416": "daśagranthyā yadā baddho tasya muktiḥ kathaṃ bhavet // 5 //",
  "GSP31sparibhu:417": "evaṃ paṭhati vedānāṃ haṃkāraṃ piṇḍapoṣaṇam(?) /",
  "GSP31sparibhu:418": "etejjñānaparaṃ jñātvā sa mukto nātra saṃśayaḥ // 6 //",
  "GSP31sparibhu:419": "kintu-",
  "GSP31sparibhu:420": "saṃhitā kāryacchandaṃ ca dṛśyabrahmeti brāhmaṇam /",
  "GSP31sparibhu:421": "nabhamāraṇyamāśritya chandambrahmāsmi vākyatā(?) // 7 //",
  "GSP31sparibhu:422": "mana ādirodhanaṃ śikṣā nighaṇṭaṃ vṛtidhāraṇam /",
  "GSP31sparibhu:423": "vivekaṃ jyotiṣaṃ caiva mamedaṃ sūryamucyate // 8 //",
  "GSP31sparibhu:424": "niruktaṃ saṃśayacchedyaṃ sūtrapāṭhaṃ ca jñānadhīḥ /",
  "GSP31sparibhu:425": "annopādhiśca vedādyā yastaṃ veda sa vedavit // 9 //",
  "GSP31sparibhu:426": "asyārthaḥ / saṃhitā nāma svahitam /",
  "GSP31sparibhu:427": "kāryakāraṇātītaṃ na tu karmacodanā /",
  "GSP31sparibhu:428": "brāhmaṇaṃ nāma sarvasvaṃ brahmaiva na tu yāgādi /",
  "GSP31sparibhu:429": "āraṇyaṃ nāma nabhalakṣyaṃ na tu āraṇyarodanam /",
  "GSP31sparibhu:430": "chando nāma brahmāsmīti smaraṇaṃ na tu piśācavacchalanam /",
  "GSP31sparibhu:431": "śikṣā nāma śāsanaṃ mana ādidhāraṇā na tu pāṭhaḥ nighaṇṭaṃ nāma kāṭhinyaṃ vṛttisāvadhanatā na tu deśāntaram /",
  "GSP31sparibhu:432": "jyotiṣaṃ nāma vivekata na tu gaṇakādivyāpāraḥ /",
  "GSP31sparibhu:433": "sūtraṃ nāma abhedānusandhānaṃ na tu karmapreraṇā /",
  "GSP31sparibhu:434": "niruktaṃ nāma saṃśayacchedyaṃ na tu vedārthaprauḍhiḥ /",
  "GSP31sparibhu:435": "sūtrapāṭhaṃ nāma jñānadṛṣṭiḥ /",
  "GSP31sparibhu:436": "na tu vyākaraṇabalam /",
  "GSP31sparibhu:437": "etajjñānaṃ paraṃ jñānamanyatsaṃsārapoṣaṇam /",
  "GSP31sparibhu:438": "iti vedoktakarmayogaḥ /",
  "GSP31sparibhu:439": "pramāṇaṃ vedākṣarāṇāṃ sāyujyaṃ sarūpatāṃ salokatāmaśnuta iti śruteḥ //",
  "GSP31sparibhu:440": "atha pātañjalahaṭhayogaḥ /",
  "GSP31sparibhu:441": "atha pātañjalayogaṃ kathayatyaṅgāni vai kramāt /",
  "GSP31sparibhu:442": "dehasādhyaṃ bhavenmokṣaṃ tajjñānaṃ sādhanaṃ śṛṇu // 1 //",
  "GSP31sparibhu:443_0": "tatra haṃsopaniṣadi- gudamavaṣṭabhyādhārādvāyumutthāpya svādhiṣṭhānaṃ triḥpradakṣiṇīkṛtya",
  "GSP31sparibhu:443_1": "maṇipūrakaṃ gatvā anāhatamatikramya viśuddhe prāṇānniruddhya ājñāmanu brahmarandhraṃ dhyāyet /",
  "GSP31sparibhu:444": "tatra nādamanubhavati ciṇiti prathamaḥ 1 ciṇiciṇi 2 ghaṇṭā 3 śaṅkha 4 tantrī 5 tāla 6 veṇu 7 bheri 8 mṛdaṅga 9 megha 10 navamaṃ tyājyaṃ daśamamabhyaset /",
  "GSP31sparibhu:445": "tasmānmano vilīnaṃ bhavati /",
  "GSP31sparibhu:446": "yasya manasi viṣṭanā manaso 'ntarāyaṃ mano na veda yasya manaḥ śarīraṃ yo manontaro yamayati /",
  "GSP31sparibhu:447": "cakraṃ sapta trikūṭaṃ ca śrīhaṭhaṃ gohaṭhaṃ tathā /",
  "GSP31sparibhu:448": "bhrūvorgumphā brahmarandhraṃ sūlo yānaṃ jalandharam // 1 //",
  "GSP31sparibhu:449": "ṭālī lolī tathā dhotī lambikāśodhanaṃ kramāt /",
  "GSP31sparibhu:450": "khecarī bhūcarī caiva mahākāṣṭhā tathaiva ca // 2 //",
  "GSP31sparibhu:451": "udgānaṃ lopanaṃ caiva gāṭhanaṃ cāvakāśakam /",
  "GSP31sparibhu:452": "iḍāpiṅgalayornāmānyaṣṭāviṃśatyanukramāt // 3 //",
  "GSP31sparibhu:453": "praṇavaṃ vyāharan jāpyaṃ so 'haṃ yāmaṃ matāntare /",
  "GSP31sparibhu:454": "asya kartā bhavejjīvo dehabhājanasammatam /",
  "GSP31sparibhu:455": "sādhanena bhavetsiddhirahaṃ vṛddho 'bhijāyate // 4 //",
  "GSP31sparibhu:456": "aṇimādi bhavetteṣāṃ bhūtaṃ bhaviṣyaṃ vartamānam /",
  "GSP31sparibhu:457": "vācāṃ siddhirmṛtaṃ mokṣaṃ dehasaṅgena mānitā // 5 //",
  "GSP31sparibhu:458": "yathā prete kṣamā liṅgaṃ tatsakāśācca saukhyatā /",
  "GSP31sparibhu:459": "tathā dehasamīreṇa ahaṃ mameti mānitā // 6 //",
  "GSP31sparibhu:460": "brahmarandhre gate prāṇe hyahaṃ mokṣo 'pi jāyate /",
  "GSP31sparibhu:461": "yathā dadhnagṛhasvāmī palāyan saukhyamānitā // 7 //",
  "GSP31sparibhu:462": "punarahaṅkṛto vāso vāsanā janmadāyinī /",
  "GSP31sparibhu:463": "tathā dehagato mokṣo buddhirarbhakasaṃmatā // 8 //",
  "GSP31sparibhu:464": "tatra gītā-",
  "GSP31sparibhu:465": "vāsāṃsi jīrṇāni yathā vihāya",
  "GSP31sparibhu:466": "navāni gṛhṇāti naro parāṇi /",
  "GSP31sparibhu:467": "tathā śarīrāṇi vihāya jīrṇā-",
  "GSP31sparibhu:468": "nyanyāni saṃyāti navāni dehī // 9 //",
  "GSP31sparibhu:469": "draṣṭā dṛśyaṃ yadā vartte dehe saṅgena mokṣakaḥ (?) /",
  "GSP31sparibhu:470": "ātmā dehī kathaṃ kṛtvā sarvavyāpivilakṣaṇaḥ / 10 //",
  "GSP31sparibhu:471": "tasmādunmīladyogī ca vikalaḥ kaulaśikṣayā /",
  "GSP31sparibhu:472": "samābhyutthānamanyāni dehasaṅgena vyarthatā // 11 //",
  "GSP31sparibhu:473": "ātmā prajñānamānandanityaśuddhanirāmayaḥ /",
  "GSP31sparibhu:474": "vicarejjñāptimātreṇa dehātītaṃ ca sarvadā // 12 //",
  "GSP31sparibhu:475": "yāvaddehābhimānaṃ ca yāvatsiddhiḥ pravarttate /",
  "GSP31sparibhu:476": "tāvajjanyānadānaṃ ca bhavetkarmānusārataḥ // 13 //",
  "GSP31sparibhu:477": "tatra niṣedhārthaśrutiḥ-",
  "GSP31sparibhu:478": "na karmaṇā na prajayā dhanena",
  "GSP31sparibhu:479": "tyāgenaike amṛtatvamānaśuḥ /",
  "GSP31sparibhu:480": "pareṇa nākaṃ nihitaṃ guhāyāṃ",
  "GSP31sparibhu:481": "vibhrājate yadyatayo viśanti //",
  "GSP31sparibhu:482": "vedāntavijñānasuniścitārthāḥ saṃnyāsayogādyatayaḥ śuddhasattvāḥ iti śruteḥ /",
  "GSP31sparibhu:483": "ābrahmabhuvanāllokāt iti gītāsu /",
  "GSP31sparibhu:484": "iṣṭādarśanadṛśyānāṃ virāmo yatra vā bhavet /",
  "GSP31sparibhu:485": "tasmādvilakṣaṇaṃ hyātmā hyaparokṣe bhavetsvayam // 1 //",
  "GSP31sparibhu:486": "yāvanna jñāyate ātmā kartṛlābhalavaṃ muniḥ /",
  "GSP31sparibhu:487": "tāvatsarvaṃ bhavedvyarthaṃ yathā vandhyā vibhūṣitā // 2 //",
  "GSP31sparibhu:488": "iti karmaparaḥ /",
  "GSP31sparibhu:489": "parantu anarthakārī dehanāśakārī /",
  "GSP31sparibhu:490": "tasmājjñānāya sādhayet /",
  "GSP31sparibhu:491": "tatra cakram ādhāraṃ nāma deham //",
  "GSP31sparibhu:492": "1 //",
  "GSP31sparibhu:493": "svādhiṣṭhānaṃ sāttvikamahaṅkāraḥ //",
  "GSP31sparibhu:494": "2 //",
  "GSP31sparibhu:495": "maṇipuraṃ buddhiḥ // 3 //",
  "GSP31sparibhu:496": "anāhataṃ sadācāraḥ //",
  "GSP31sparibhu:497": "4 //",
  "GSP31sparibhu:498": "viśuddhaṃ guhabhaktiḥ //",
  "GSP31sparibhu:499": "5 //",
  "GSP31sparibhu:500": "ājñācakre jñāne sāvadhānatā //",
  "GSP31sparibhu:501": "6 //",
  "GSP31sparibhu:502": "sahasradalaṃ turyā //",
  "GSP31sparibhu:503": "7 //",
  "GSP31sparibhu:504": "trikūṭaṃ guṇarahitam //",
  "GSP31sparibhu:505": "8 //",
  "GSP31sparibhu:506": "śrīhaṭhaṃ māyārahitam // 9 //",
  "GSP31sparibhu:507": "gohaṭhamavidyātiraskāraḥ //",
  "GSP31sparibhu:508": "10 //",
  "GSP31sparibhu:509": "bhruvorgumphā kāmanāśūnyam //",
  "GSP31sparibhu:510": "11 //",
  "GSP31sparibhu:511": "brahmarandhraṃ manolayaḥ //",
  "GSP31sparibhu:512": "12 //",
  "GSP31sparibhu:513": "sūlabandhamindriyanigrahaḥ //",
  "GSP31sparibhu:514": "13 //",
  "GSP31sparibhu:515": "yānaṃ viṣayanirāsaḥ //",
  "GSP31sparibhu:516": "14 //",
  "GSP31sparibhu:517": "jālandharaṃ svapararahitam //",
  "GSP31sparibhu:518": "15 //",
  "GSP31sparibhu:519": "ṭālī padārthavārtāśūnyam //",
  "GSP31sparibhu:520": "16 //",
  "GSP31sparibhu:521": "lolī yuktāhāraḥ //",
  "GSP31sparibhu:522": "17 //",
  "GSP31sparibhu:523": "dhotī sarvajale 'pyaikyam //",
  "GSP31sparibhu:524": "18 //",
  "GSP31sparibhu:525": "lambikā stutinindārahitam //",
  "GSP31sparibhu:526": "19 //",
  "GSP31sparibhu:527": "khecarī avakāśe dṛṣṭiḥ //",
  "GSP31sparibhu:528": "20 //",
  "GSP31sparibhu:529": "bhūcarī yugmamātramavalokanam //",
  "GSP31sparibhu:530": "21 //",
  "GSP31sparibhu:531": "mahākāṣṭhā sarvaṃ brahmeti niścayaḥ //",
  "GSP31sparibhu:532": "22 //",
  "GSP31sparibhu:533": "udgānamaniketam //",
  "GSP31sparibhu:534": "23 //",
  "GSP31sparibhu:535": "lopanaṃ kāryātītam //",
  "GSP31sparibhu:536": "24 //",
  "GSP31sparibhu:537": "gāṭhanaṃ dehaduḥkhasahanam //",
  "GSP31sparibhu:538": "25 //",
  "GSP31sparibhu:539": "avakāśama dehātītam //",
  "GSP31sparibhu:540": "26 //",
  "GSP31sparibhu:541": "iḍāpiṅgalayornāma //",
  "GSP31sparibhu:542": "27 //",
  "GSP31sparibhu:543": "28 //",
  "GSP31sparibhu:544": "prapañcabuddhirahitam //",
  "GSP31sparibhu:545": "evantu sādhayetprājño na tu dehaviḍambanam /",
  "GSP31sparibhu:546": "dehādvilakṣaṇaṃ ātmā vṛthā bhramanti mānavāḥ //",
  "GSP31sparibhu:547": "iti pātañjalahaṭhayogaḥ //",
  "GSP31sparibhu:548": "atha sāṅkhyarājayogaḥ /",
  "GSP31sparibhu:549": "vinā sāṅkhyena pratyakṣaṃ na bhavedātmayoginām(?) /",
  "GSP31sparibhu:550": "dehaḥ kañcukavattyājyaḥ svasvaṃ khamiva rājate // 1 //",
  "GSP31sparibhu:551": "yaṃ śaivāḥ samupāsate śiva iti brahmeti vedāntino",
  "GSP31sparibhu:552": "bauddhā buddha iti pramāṇapaṭavaḥ karteti naiyāyikāḥ /",
  "GSP31sparibhu:553": "arhannityatha jainaśāsanaratāḥ karmeti mīmāṃsakāḥ",
  "GSP31sparibhu:554": "sarve ghūrṇiparāḥ prapañcavikalāḥ sāṃkhyātparaṃ nānyathā // 2 //",
  "GSP31sparibhu:555": "sāṃkhyaṃ yogaṃ samabhyasyet puruṣaṃ pañcaviṃśatiḥ /",
  "GSP31sparibhu:556": "iti śrutirvedavākyaṃ vedāntaiḥ sadbhirucyate // 3 //",
  "GSP31sparibhu:557": "ākāśapūrakaṃ sāṃkhyaṃ yogaḥ samīrapūrakaḥ /",
  "GSP31sparibhu:558": "dehādvilakṣaṇaṃ ātmā tasmātsāṃkhyaṃ samabhyaset // 4 //",
  "GSP31sparibhu:559": "pralayaḥ sarvatadvācāmātmano vyatirekatā(?) /",
  "GSP31sparibhu:560": "sa sāṃkhyayogasaṃjñā ca itaraṃ bhrāmikaṃ matam // 5 //",
  "GSP31sparibhu:561": "sarvādvilakṣaṇo hyātmā ekamanekarūpiṇam /",
  "GSP31sparibhu:562": "ekamevādvitīyaṃ brahma alaṃ tataḥ paraṃ bhavet (?) // 6 //",
  "GSP31sparibhu:563": "iti sāṃkhyayogaḥ /",
  "GSP31sparibhu:564": "atha dehalakṣaṇam-",
  "GSP31sparibhu:565": "bhogarogaṃ tathā malaṃ nidhanaṃ kṣetragāmitā /",
  "GSP31sparibhu:566": "prārabdhamanuvarttante yathā tadvai viniścitam // 1 //",
  "GSP31sparibhu:567": "pañcatanmātrabhūtāni pratyakṣamakhilaṃ jagat /",
  "GSP31sparibhu:568": "prakṛtirguṇakarmāṇi varttante citprakāśataḥ // 2 //",
  "GSP31sparibhu:569": "manotthāya yadā dehe tatkarma jīvasaṃjñakam /",
  "GSP31sparibhu:570": "dehena manamutthāya tatkarma dehasaṃjñitam(?) // 3 //",
  "GSP31sparibhu:571": "bhakṣyabhakṣakabhāvaṃ ca bhūtaṃ bhūteṣu yujyate /",
  "GSP31sparibhu:572": "tadarthaṃ śṛṇu me vatsa pañcabhūtānyanukramāt // 4 //",
  "GSP31sparibhu:573": "āpaḥ pṛthivī bhakṣyaṃ ca vāyuragniśca bhakṣakaḥ /",
  "GSP31sparibhu:574": "tatrākāśamāvapanaṃ sattā cinmātrasaṃjñitā // 5 //",
  "GSP31sparibhu:575": "kṣutpipāsāvisargaṃ ca dehe karmāṇi kevalam /",
  "GSP31sparibhu:576": "anyatkāryāṇi karmāṇi vedasaṃjñā vidhīyate // 6 //",
  "GSP31sparibhu:577": "dhairyaṃ samarasaścaiva sarvabhakṣasya nispṛhaḥ /",
  "GSP31sparibhu:578": "akhaṇḍapañcabhūtāni lakṣaṇairdeha ucyate // 7 //",
  "GSP31sparibhu:579": "tatrāhamantaḥkaraṇaṃ bhoktā,",
  "GSP31sparibhu:580": "bhoktā nāma sākṣitvam indriyāṇāṃ bhogasādhanatā nāma rasaparīkṣā pañcabhūtānāṃ bhogyaṃ nāma sthūlakṛśādidravyaguṇāḥ /",
  "GSP31sparibhu:581": "yathā bhavanti tathā /",
  "GSP31sparibhu:582": "tatra pramāṇaṃ śrutiḥ- tābhyaḥ puruṣamānayattā abruvanpuruṣaṃ stuteti puruṣo vā vasu kṛtaṃ yathāyatanaṃ praviśāmi kṣutpipāse bhavateti śruteḥ mātābālakanyāyena tatra gītāsu",
  "GSP31sparibhu:583": "idaṃ śarīraṃ kaunteya kṣetramityabhidhīyate /",
  "GSP31sparibhu:584": "etadyo vetti tama prāhuḥ kṣetrajña iti tadvidaḥ // 8 //",
  "GSP31sparibhu:585": "iti sāṃkhyaparibhāṣā (1) //",
  "GSP31sparibhu:586": "(1) sāṃkhyaparibhāṣāgranthasya ekamevādarśapustakaṃ prāptamapi ca granthakṛtā granthaprārambhe-",
  "GSP31sparibhu:587": "vibhaktimatra yo paśyettasya jñānaṃ ca dūrataḥ /",
  "GSP31sparibhu:588": "guruyuktyā prasādena granthagarbhāvalokanam //",
  "GSP31sparibhu:589": "iti pratijñātatvādasya mudraṇe kārite bahuṣu sthaleṣu agatyā 'śuddhirasti kintu granthārtharakṣārthaṃ na tannirāse 'smābhirdṛṣṭipātaḥ kṛtaḥ /",
  "GSP31sparibhu:590": "grantho 'pi khaṇḍita ivābhāti /"
}