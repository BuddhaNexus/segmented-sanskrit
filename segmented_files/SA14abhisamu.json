{
  "SA14abhisamu:0_0": "kṛtirmaitreyanāthasya //",
  "SA14abhisamu:0_1": "Oṃ namo maitreyanāthāya //",
  "SA14abhisamu:1_0": "yā sarvajñatayā nayatyupaśamaṃ śāntaiṣiṇaḥ śravakān",
  "SA14abhisamu:1_1": "yā mārgajñatayā jagaddhitakritāṃ lokārthasaṃpādikā /",
  "SA14abhisamu:1_2": "savārkāramidaṃ vadanti munayo viśvaṃ yayā saṃgatā",
  "SA14abhisamu:1_3": "stasyai śrāvakabodhisattvagaṇino buddhasya manne namaḥ //",
  "SA14abhisamu:abhs_1.1_0": "sarvākārajñatāmārgaḥ śāsitrā yo 'tra deśita /",
  "SA14abhisamu:abhs_1.1_1": "dhīmantī vīkṣīṣīraṃstamanālīḍhaṃ parairiti //",
  "SA14abhisamu:abhs_1.2_0": "smṛtau cādhāya sūtrārthaṃ dharmacaryā daśātmikā /",
  "SA14abhisamu:abhs_1.2_1": "sūkhena pratipatsīrannityārambhaprayojanam //",
  "SA14abhisamu:abhs_1.3_0": "prajñāpāramitāṣṭābhīḥ padārthaiḥ samudīritā /",
  "SA14abhisamu:abhs_1.3_1": "sarvākārajñatā mārgajñatā sarvajñatā tataḥ //",
  "SA14abhisamu:abhs_1.4_0": "sarvākārābhisaṃbodho murdhaprārpto 'nupūrvikaḥ /",
  "SA14abhisamu:abhs_1.4_1": "ekakṣaṇabhisaṃbodho dharmakāyaśca te 'ṣṭadhā //",
  "SA14abhisamu:abhs_1.5_0": "cittotpādo 'vavādaśca nirvedhāṅgaṃ caturvidhaṃ /",
  "SA14abhisamu:abhs_1.5_1": "ādhāraḥ pratipatteśca dharmadhātusvabhāvakaḥ //",
  "SA14abhisamu:abhs_1.6_0": "ālambanaṃ samuddeśaḥ saṃnāhaprasthitikriye /",
  "SA14abhisamu:abhs_1.6_1": "saṃbhārāśca saniryāṇāḥ sarvākārajñatā muneḥ //",
  "SA14abhisamu:abhs_1.7_0": "dhyāmīkaraṇatādīni śiṣyakhaṅgapathau ca yau /",
  "SA14abhisamu:abhs_1.7_1": "mahānuśaṃso dṛṅmārga aihikāmutrikairguṇaiḥ //",
  "SA14abhisamu:abhs_1.8_0": "kāritramadhimuktiśca stutastobhitaśaṃsitāḥ /",
  "SA14abhisamu:abhs_1.8_1": "pariṇāme 'numode ca manaskārāvanuttamau //",
  "SA14abhisamu:abhs_1.9_0": "nirhāraḥ śuddhiratyantāmityayaṃ bhāvanāpathaḥ /",
  "SA14abhisamu:abhs_1.9_1": "vijñānāṃ bodhisattvānāmiti mārgajñatoditā //",
  "SA14abhisamu:abhs_1.10_0": "prajñayā na bhave sthānaṃ kṛpayā na śame sthitiḥ /",
  "SA14abhisamu:abhs_1.10_1": "anupāyena dūratvamupāyenāvidūratā //",
  "SA14abhisamu:abhs_1.11_0": "vipakṣapratipakṣau ca prayogaḥ samatāsya ca /",
  "SA14abhisamu:abhs_1.11_1": "dṛṅmārgaḥ śrāvakādīnāmiti sarvajñateṣyate //",
  "SA14abhisamu:abhs_1.12_0": "ākārāḥ saprayogāśca guṇā doṣāḥ salakṣaṇāḥ /",
  "SA14abhisamu:abhs_1.12_1": "mokṣanirvedhabhāgīye śaikṣo 'vaivartiko gaṇaḥ //",
  "SA14abhisamu:abhs_1.13_0": "samatābhavaśāntyośca kṣetraśuddhiranuttarā /",
  "SA14abhisamu:abhs_1.13_1": "sarvākārābhisaṃbodha eṣa sopāyakauśalaḥ //",
  "SA14abhisamu:abhs_1.14_0": "liṅgaṃ tasya vivṛddhiśca nirūḍhiścittasaṃsthitiḥ /",
  "SA14abhisamu:abhs_1.14_1": "caturdhā ca vikalpasya pratipakṣaścaturvidhaḥ //",
  "SA14abhisamu:abhs_1.15_0": "pratyekaṃ darsanākhye ca bhāvanākhye ca vartmani /",
  "SA14abhisamu:abhs_1.15_1": "ānantaryasamādhiśca saha vipratipattibhiḥ //",
  "SA14abhisamu:abhs_1.16_0": "mūrdhābhisamayaḥ tredhā daśadhā cānupūrvikaḥ /",
  "SA14abhisamu:abhs_1.16_1": "ekakṣaṇābhisaṃbodho lakṣaṇena caturvidhiḥ //",
  "SA14abhisamu:abhs_1.17_0": "svābhāvikaḥ sasāṃbhogo nairmāṇiko 'parastathā /",
  "SA14abhisamu:abhs_1.17_1": "dharmakāyaḥ sakāritraścaturdhā samudīritaḥ //",
  "SA14abhisamu:abhs_1.18_0": "cittotpādaḥ parārthāya sammyaksaṃbodhikāmatā /",
  "SA14abhisamu:abhs_1.18_1": "samāsavyāsataḥ sā ca yathāsutraṃ sa cocyate //",
  "SA14abhisamu:abhs_1.19_0": "bhūhemacandrajvalanairnidhiratnākarārṇavaiḥ /",
  "SA14abhisamu:abhs_1.19_1": "vajrācalauṣadhīmitraiścintāmaṇyarkagītibhiḥ //",
  "SA14abhisamu:abhs_1.20_0": "nṛpagañjamahāmārgayānaprasravaṇodakaiḥ /",
  "SA14abhisamu:abhs_1.20_1": "ānandoktinadīmeghairdvāviṃśatividhaḥ sa ca //",
  "SA14abhisamu:abhs_1.21_0": "pratipattau ca satyeṣu buddharatnādiṣu triṣu /",
  "SA14abhisamu:abhs_1.21_1": "asaktāvapariśrāntau pratipatsaṃparigrahe //",
  "SA14abhisamu:abhs_1.22_0": "cakṣuḥṣu pañcasu jñeyaḥ ṣaṭsvabhijñāguṇeṣu ca /",
  "SA14abhisamu:abhs_1.22_1": "dṛṅmārge bhāvanākhye cetyavavādo daśātmakaḥ //",
  "SA14abhisamu:abhs_1.23_0": "mṛdutikṣṇendriyau śraddhādṛṣṭiprāptau kulaṃkulau /",
  "SA14abhisamu:abhs_1.23_1": "ekavīcyantarotpadya kārākārākaniṣṭhagāḥ //",
  "SA14abhisamu:abhs_1.24_0": "plutāstrayo bhavasyāgraparamo rūparāgaha /",
  "SA14abhisamu:abhs_1.24_1": "dṛṣṭadharmaśamaḥ kāyasākṣī khaṅgaśca viṃśatiḥ //",
  "SA14abhisamu:abhs_1.25_0": "ālambanata ākārāddhetutvātsaṃparigrahāt /",
  "SA14abhisamu:abhs_1.25_1": "caturvikalpasaṃyogaṃ yathāsvaṃ bhajatāṃ satām //",
  "SA14abhisamu:abhs_1.26_0": "śrāvakebhyaḥ sakhaḍgebhyo bodhisattvasya tāyinaḥ /",
  "SA14abhisamu:abhs_1.26_1": "mṛdumadhyādhimātrāṇāmūṣmādīnāṃ viśiṣṭatā //",
  "SA14abhisamu:abhs_1.27_0": "ālambanamanityādi satyādhāraṃ tadākṛtiḥ /",
  "SA14abhisamu:abhs_1.27_1": "niṣedho 'miniveśāderheturyānatrayāptaye //",
  "SA14abhisamu:abhs_1.28_0": "rūpādyāyavyayau viṣṭhāsthitī prajñaptyavācyate /",
  "SA14abhisamu:abhs_1.28_1": "rūpādāvasthitisteṣāṃ tadbhāvenāsvabhāvatā //",
  "SA14abhisamu:abhs_1.29_0": "tayormithaḥsvabhāvatvaṃ tadanityādyasaṃsthitiḥ /",
  "SA14abhisamu:abhs_1.29_1": "tāsāṃ tadbhāvaśūnyatvaṃ mithaḥ svabhāvyametayoḥ //",
  "SA14abhisamu:abhs_1.30_0": "anudgraho yo dharmāṇāṃ tannimittāsamīkṣaṇam /",
  "SA14abhisamu:abhs_1.30_1": "parīkṣaṇaṃ ca prajñāyāḥ sarvasyānupalambhataḥ //",
  "SA14abhisamu:abhs_1.31_0": "rūpāderasvabhavāvatvaṃ tadabhāvasvabhāvatā /",
  "SA14abhisamu:abhs_1.31_1": "tadajātiraniryāṇaṃ śuddhistadanimittatā //",
  "SA14abhisamu:abhs_1.32_0": "tannimittānadhiṣṭhānānadhimuktirasaṃjñatā /",
  "SA14abhisamu:abhs_1.32_1": "samādhistasya kāritraṃ vyākṛtirmananākṣayaḥ //",
  "SA14abhisamu:abhs_1.33_0": "mithastrikasya svābhāvyaṃ samādheravikalpanā /",
  "SA14abhisamu:abhs_1.33_1": "iti nirvedhabhāgīyaṃ mṛdumadhyādhimātrataḥ //",
  "SA14abhisamu:abhs_1.34_0": "dvaividhyaṃ grāhyakalpasya vastutatpratipakṣataḥ /",
  "SA14abhisamu:abhs_1.34_1": "moharāśyādibhedena pratyekaṃ navadhā tu saḥ //",
  "SA14abhisamu:abhs_1.35_0": "dravyaprajñaptyadhiṣṭhāno dvividho grāhako mataḥ /",
  "SA14abhisamu:abhs_1.35_1": "svatantrātmādirūpeṇa skandhādyāśrayatastathā //",
  "SA14abhisamu:abhs_1.36_0": "cittānavalīnatvādi naīḥsvābhāvyādideśakaḥ /",
  "SA14abhisamu:abhs_1.36_1": "tadvipakṣaparityāgaḥ sarvathā saṃparigrahaḥ //",
  "SA14abhisamu:abhs_1.37_0": "ṣoḍhādhigamadharmasya pratipakṣaprahāṇayoḥ /",
  "SA14abhisamu:abhs_1.37_1": "tayoḥ paryupayogasya prajñāyāḥ kṛpayā saha //",
  "SA14abhisamu:abhs_1.38_0": "śiṣyāsādhāraṇatvasya parārthānukramasya ca /",
  "SA14abhisamu:abhs_1.38_1": "jñānasyāyatnavṛtteśca pratiṣṭhā gotramucyate //",
  "SA14abhisamu:abhs_1.39_0": "dharmadhātorasaṃbhedādgotrabhedo na yujyate /",
  "SA14abhisamu:abhs_1.39_1": "ādheyadharmabhedāttu tadbhedaḥ parigīyate //",
  "SA14abhisamu:abhs_1.40_0": "ālambanaṃ sarvadharmāste punaḥ kuśalādayaḥ /",
  "SA14abhisamu:abhs_1.40_1": "laukikādhigamākhyāścaṃ ye ca lokettarā matāḥ //",
  "SA14abhisamu:abhs_1.41_0": "sāsravānāsravā dharmāḥ saṃskṛtāsaṃskṛtāśca ye /",
  "SA14abhisamu:abhs_1.41_1": "śiṣyasādhāraṇā dharmā ye cāsādhāranā muneḥ //",
  "SA14abhisamu:abhs_1.42_0": "sarvasattvāgratā cittaprahāṇādhigamatraye /",
  "SA14abhisamu:abhs_1.42_1": "tribhirmahattvairūddeśo vijñeyo 'ya svayaṃbhuvām //",
  "SA14abhisamu:abhs_1.43_0": "dānādau ṣaḍvidha teṣāṃ pratyekaṃ saṃgraheṇa yā /",
  "SA14abhisamu:abhs_1.43_1": "saṃnāhapratipattiḥ sā ṣaḍbhiḥ ṣaṭkairyathodithā //",
  "SA14abhisamu:abhs_1.44_0": "dyānārūpyeṣu dānādau mārge maitryādikeṣu ca /",
  "SA14abhisamu:abhs_1.44_1": "gatopalambhayoge ca trimaṇḍalaviśuddhiṣu //",
  "SA14abhisamu:abhs_1.45_0": "uddeśe ṣaṭsvabhijñāsu sarvākārajñatānaye /",
  "SA14abhisamu:abhs_1.45_1": "prasthānapratipajjñeyā mahāyānādhirohiṇī //",
  "SA14abhisamu:abhs_1.46_0": "dayā dānādikaṃ ṣaṭkaṃ śamathaḥ savidarśanaḥ /",
  "SA14abhisamu:abhs_1.46_1": "yuganaddhaśca yo mārga upāye yacca kauśalam //",
  "SA14abhisamu:abhs_1.47_0": "jñānaṃ puṇyaṃ ca mārgaśca dhāraṇī bhūmayo daśa /",
  "SA14abhisamu:abhs_1.47_1": "pratipakṣaśca vijñeyaḥ saṃbhārapratipatkramaḥ //",
  "SA14abhisamu:abhs_1.48_0": "labhyate prathamā bhumirdaśadhā parikarmaṇā /",
  "SA14abhisamu:abhs_1.48_1": "āśayo hitavastutvaṃ sattveṣu samacittatā //",
  "SA14abhisamu:abhs_1.49_0": "tyāgaḥ sevā ca mitrāṇāṃ saddharmālambanaiṣaṇā /",
  "SA14abhisamu:abhs_1.49_1": "sadā naiṣkramyacittatvaṃ buddhakāyagatā spṛhā //",
  "SA14abhisamu:abhs_1.50_0": "dharmasya deśanā satyaṃ daśamaṃ vākyamiṣyate /",
  "SA14abhisamu:abhs_1.50_1": "jñeyam ca pārikarmaiṣāṃ svabhāvānupalambhataḥ //",
  "SA14abhisamu:abhs_1.51_0": "śīlaṃ kṛtajñatā kṣāntiḥ pramodyaṃ mahatī kṛpā /",
  "SA14abhisamu:abhs_1.51_1": "gauravaṃ guruśuśrūṣā vīryaṃ dānādike 'ṣṭamam //",
  "SA14abhisamu:abhs_1.52_0": "atṛptatā śrute dānaṃ dharmasya ca nirāmiṣam /",
  "SA14abhisamu:abhs_1.52_1": "buddhakṣetrasya saṃśuddhiḥ saṃsārāparikheditā //",
  "SA14abhisamu:abhs_1.53_0": "hrīrapatrāpyamityetat pañcadhā mananātmakam /",
  "SA14abhisamu:abhs_1.53_1": "vanāśālpecChatā tuṣṭirdhūtasaṃlekhasevanam //",
  "SA14abhisamu:abhs_1.54_0": "śikṣāyā aparityāgaḥ kāmānāṃ vijugupsanam /",
  "SA14abhisamu:abhs_1.54_1": "nirvitsarvāstisaṃtyāgo 'navalinānapekṣate //",
  "SA14abhisamu:abhs_1.55_0": "saṃstavaṃ kulamātsaryaṃ sthānaṃ saṃgaṇikāvaham /",
  "SA14abhisamu:abhs_1.55_1": "ātmotkarṣaparāvajñe karmamārgān daśāśubhān //",
  "SA14abhisamu:abhs_1.56_0": "mānaṃ stambhaṃ viparyāsaṃ vimatiṃ kleśamarṣaṇam /",
  "SA14abhisamu:abhs_1.56_1": "vivarjayan samāpneti daśaitān pañcamīṃ bhuvam //",
  "SA14abhisamu:abhs_1.57_0": "dānaśīlakṣamāvīryadhyānaprajñāprapūraṇāt /",
  "SA14abhisamu:abhs_1.57_1": "śiṣyakhaḍgaspṛhātrāsacetasāṃ parivarjakaḥ //",
  "SA14abhisamu:abhs_1.58_0": "yācito 'navalinaśca sarvatyāge 'pyadurmanāḥ /",
  "SA14abhisamu:abhs_1.58_1": "kṛśo 'pi nārthināṃ kṣeptā ṣaṣṭhīṃ bhūmiṃ samaśrute //",
  "SA14abhisamu:abhs_1.59_0": "ātmasattvagraho jīvapudgalocChedaśāśvataḥ /",
  "SA14abhisamu:abhs_1.59_1": "nimittahetvoḥ skandheṣu dhātuṣvāyataneṣu ca //",
  "SA14abhisamu:abhs_1.60_0": "traidhātuke pratiṣṭhānaṃ saktirālīnacittatā /",
  "SA14abhisamu:abhs_1.60_1": "ratnatritayaśīleṣu taddṛṣṭyabhiniveśitā //",
  "SA14abhisamu:abhs_1.61_0": "śūnyatāyāṃ vivadaśca tadvirodhaśca viṃśatiḥ /",
  "SA14abhisamu:abhs_1.61_1": "kalaṅkā yasya vicChinnāḥ saptamīmetyasau bhuvam //",
  "SA14abhisamu:abhs_1.62_0": "trivimokṣamukhajñānaṃ trimaṇḍalaviśuddhatā /",
  "SA14abhisamu:abhs_1.62_1": "karūṇāmananā dharmasamataikanayajñatā //",
  "SA14abhisamu:abhs_1.63_0": "anutpādakṣamājñānaṃ dharmāṇāmekadheraṇā /",
  "SA14abhisamu:abhs_1.63_1": "kalpanāyāḥ samuddhātaḥ saṃjñādṛkkleśavarjanam //",
  "SA14abhisamu:abhs_1.64_0": "śamathasya ca nidhyaptiḥ kauśalaṃ ca vidarśane /",
  "SA14abhisamu:abhs_1.64_1": "cittasya dāntatā jñānaṃ sarvatrāpratighāti ca //",
  "SA14abhisamu:abhs_1.65_0": "sakterabhūmiryatrecChaṃ kṣetrāntaragatiḥ samam /",
  "SA14abhisamu:abhs_1.65_1": "sarvatra svātmabhāvasya darśanaṃ ceti viṃśatiḥ //",
  "SA14abhisamu:abhs_1.66_0": "sarvasattvamanojñānamabhijñākrīḍanaṃ śubhā /",
  "SA14abhisamu:abhs_1.66_1": "buddhakṣetrasya niṣpattirbuddhasevāparīkṣaṇe //",
  "SA14abhisamu:abhs_1.67_0": "akṣajñānaṃ jinakṣetraśuddhirmāyopamā sthitiḥ /",
  "SA14abhisamu:abhs_1.67_1": "saṃcintya ca bhavādānamidaṃ karmāṣṭadhoditam //",
  "SA14abhisamu:abhs_1.68_0": "praṇidhānānyanantāni devādīnāṃ rūtajñatā /",
  "SA14abhisamu:abhs_1.68_1": "nadīva pratibhānānāṃ garbhāvakrāntirūttamā //",
  "SA14abhisamu:abhs_1.69_0": "kulajātyośca gotrasya parivārasya janmanaḥ /",
  "SA14abhisamu:abhs_1.69_1": "naiṣkramyabodhivṛkṣāṇāṃ guṇapūreśca saṃpadaḥ //",
  "SA14abhisamu:abhs_1.70_0": "nava bhūmīratikramya buddhabhūmau pratiṣṭhate /",
  "SA14abhisamu:abhs_1.70_1": "yena jñānena sā jñeyā daśamī bodhisattvabhūḥ //",
  "SA14abhisamu:abhs_1.71_0": "pratipakṣo 'ṣṭadhā jñeyo darṣanābhyāsamārgayoḥ /",
  "SA14abhisamu:abhs_1.71_1": "grāhyagrāhakavikalpānāmaṣṭānāmupaśāntaye //",
  "SA14abhisamu:abhs_1.72_0": "uddeśe samatāyāṃ ca sattvārthe yatnavarjane /",
  "SA14abhisamu:abhs_1.72_1": "atyantāya ca niryāṇaṃ niryāṇaṃ prāptilakṣaṇam //",
  "SA14abhisamu:abhs_1.73_0": "sarvākārajñatayāṃ ca niryāṇaṃ mārgagocaram /",
  "SA14abhisamu:abhs_1.73_1": "niryāṇapratipajjñeyā seyamaṣṭavidhātmikā //",
  "SA14abhisamu:2_0": "// abhisamayālaṅkāre prajñāpāramitopadeśaśāstre",
  "SA14abhisamu:2_1": "sarvākārajñatādhikāraḥ prathamaḥ //",
  "SA14abhisamu:abhs_2.1_0": "dhyāmīkaraṇatā bhābhirdevānāṃ yogyatāṃ prati /",
  "SA14abhisamu:abhs_2.1_1": "viṣayo niyato vyāptiḥ svabhāvastasya karma ca //",
  "SA14abhisamu:abhs_2.2_0": "caturṇamāryasatyānāmākārānupalambhataḥ /",
  "SA14abhisamu:abhs_2.2_1": "śrāvakāṇāmayaṃ mārgo jñeyo mārgajñatānaye //",
  "SA14abhisamu:abhs_2.3_0": "rūpādiskandhaśūnyatvācChūnyatānāmabhedataḥ /",
  "SA14abhisamu:abhs_2.3_1": "uṣmāṇaḥ anupalambhena teṣāṃ murdhagataṃ matam //",
  "SA14abhisamu:abhs_2.4_0": "kṣāntayasteṣu nityādiyogasthānaniṣedhataḥ /",
  "SA14abhisamu:abhs_2.4_1": "daśa bhūmīḥ samārabhya vistarāsthānadeśanat //",
  "SA14abhisamu:abhs_2.5_0": "agradharmagataṃ proktamāryaśrāvakavartmani /",
  "SA14abhisamu:abhs_2.5_1": "tatkasya hetorbuddhena buddhvā dharmāsamīkṣaṇāt //",
  "SA14abhisamu:abhs_2.6_0": "paropadeśavaiyarthyaṃ svayaṃbodhāt svayaṃbhuvām /",
  "SA14abhisamu:abhs_2.6_1": "gambhīratā ca jñānasya khaḍgānāmabhidhīyate //",
  "SA14abhisamu:abhs_2.7_0": "śuśrūṣā yasya yasyārthe yatra yatra yathā yathā /",
  "SA14abhisamu:abhs_2.7_1": "sa so 'rthaḥ khyātyaśabdo 'pi tasya tasya tathā tathā //",
  "SA14abhisamu:abhs_2.8_0": "grahyārthakalpanāhānādgrāhakasyāprahāṇataḥ /",
  "SA14abhisamu:abhs_2.8_1": "ādhārataśca vijñeyaḥ khaḍgamārgasya saṃgrahaḥ //",
  "SA14abhisamu:abhs_2.9_0": "prajñapteravirodhena dharmatāsūcanākṛtiḥ /",
  "SA14abhisamu:abhs_2.9_1": "usṣmagam mūrdhagaṃ rūpādyahānādiprabhāvitam //",
  "SA14abhisamu:abhs_2.10_0": "adyātmaśūnyatādyābhī rūpāderaparigrahāt /",
  "SA14abhisamu:abhs_2.10_1": "kṣāntiḥ rūpādyanutpādādyākārairagradharmatā //",
  "SA14abhisamu:abhs_2.11_0": "kṣāntijñānakṣaṇaiḥ satyasatyaṃ prati caturvidhaiḥ /",
  "SA14abhisamu:abhs_2.11_1": "mārgajñatāyāṃ dṛṅmārgaḥ sānuśaṃso 'yamucyate //",
  "SA14abhisamu:abhs_2.12_0": "ādhārādheyatābhāvāttathatābuddhayormithaḥ /",
  "SA14abhisamu:abhs_2.12_1": "paryāyeṇānanujñānaṃ mahattā sāpramāṇatā //",
  "SA14abhisamu:abhs_2.13_0": "parimāṇāntatābhāvo rūpāderavadhāraṇam /",
  "SA14abhisamu:abhs_2.13_1": "tasyāṃ sthitasya buddhatve 'nugrahātyāgatādayaḥ //",
  "SA14abhisamu:abhs_2.14_0": "maītryādi śūnyatā prāptirbuddhatvasya parigrahaḥ /",
  "SA14abhisamu:abhs_2.14_1": "sarvasya vyavadānasya sarvādhivyādhiśātanam //",
  "SA14abhisamu:abhs_2.15_0": "nirvāṇagrāhaśāntatvaṃ buddhebho rakṣaṇādikam /",
  "SA14abhisamu:abhs_2.15_1": "aprāṇivadhamārabhya sarvākārajñatānaye //",
  "SA14abhisamu:abhs_2.16_0": "svayaṃ sthitasya sattvānāṃ sthāpanaṃ pariṇāmanam /",
  "SA14abhisamu:abhs_2.16_1": "danādīnāṃ ca saṃbodhāviti mārgajñatākṣaṇāḥ //",
  "SA14abhisamu:abhs_2.17_0": "sarvato damanaṃ nāma sarvataḥ kleśanirjayaḥ /",
  "SA14abhisamu:abhs_2.17_1": "upamakrāviṣahyatvaṃ bodhirādhārapūjyatā //",
  "SA14abhisamu:abhs_2.18_0": "adhimuktistridhā jñeyā svārthā ca svaparārthakā /",
  "SA14abhisamu:abhs_2.18_1": "parārthikaivetyeṣa ca pratyekaṃ trividheṣyate //",
  "SA14abhisamu:abhs_2.19_0": "mṛdvī madhyādhimātrā ca mṛdumṛdvādibhedataḥ /",
  "SA14abhisamu:abhs_2.19_1": "sā punastrividhetyevaṃ saptaviṃśatidhā matā //",
  "SA14abhisamu:abhs_2.20_0": "stutiḥ stobhaḥ praśaṃsā ca prajñāparamitāṃ prati /",
  "SA14abhisamu:abhs_2.20_1": "adhimokṣasya mātrāṇāṃ navakaistribhiriṣyate //",
  "SA14abhisamu:abhs_2.21_0": "viśeṣaḥ pariṇāmastu tasya kāritramuttamam /",
  "SA14abhisamu:abhs_2.21_1": "nopalambhākṛtiścāsāvaviparyāsalakṣaṇaḥ //",
  "SA14abhisamu:abhs_2.22_0": "vivikto buddhapuṇyaughasvabhāvasmṛtigocaraḥ /",
  "SA14abhisamu:abhs_2.22_1": "sopāyaścānimittaśca buddhairabhyanumoditaḥ //",
  "SA14abhisamu:abhs_2.23_0": "traidhātukāprapannaśca pariṇāmo 'parastridhā /",
  "SA14abhisamu:abhs_2.23_1": "mṛdurmadhyo 'dhimātraśca mahāpuṇyodayātmakaḥ //",
  "SA14abhisamu:abhs_2.24_0": "upāyānupalambābhyāṃ śubhamūlānumodanā /",
  "SA14abhisamu:abhs_2.24_1": "anumode manaskārabhāvaneha vidhīyate //",
  "SA14abhisamu:abhs_2.25_0": "svabhāvaḥ śreṣṭhatā tasya sarvasyānabhisaṃskṛtiḥ /",
  "SA14abhisamu:abhs_2.25_1": "nopalambhena dharmāṇāmarpaṇā ca mahārthatā //",
  "SA14abhisamu:abhs_2.26_0": "buddhasevā ca dānādirūpāye yacca kauśalam /",
  "SA14abhisamu:abhs_2.26_1": "hetavo 'trādhimokṣasya dharmavyasanahetavaḥ //",
  "SA14abhisamu:abhs_2.27_0": "mārādhiṣṭhānagambhīradharmatānadhimuktate /",
  "SA14abhisamu:abhs_2.27_1": "skandhādyabhiniveśaśca pāpamitraparigrahaḥ //",
  "SA14abhisamu:abhs_2.28_0": "phalaśuddhiśca rūpādiśuddhireva tayordvayoḥ /",
  "SA14abhisamu:abhs_2.28_1": "abhinnācChinnatā yasmāditi śuddhirudīritā //",
  "SA14abhisamu:abhs_2.29_0": "kleśajñeyatrimārgasya śiṣyakhaḍgajinaurasām /",
  "SA14abhisamu:abhs_2.29_1": "hānādviśuddhirātyantikī tu buddhasya sarvathā //",
  "SA14abhisamu:abhs_2.30_0": "mṛdumṛdvādiko mārgaḥ śuddhirnavasu bhūmiṣu /",
  "SA14abhisamu:abhs_2.30_1": "adhimātrādhimātrādermalasya pratipakṣataḥ //",
  "SA14abhisamu:abhs_2.31_0": "tridhātupratipakṣatvaṃ samatā manameyayoḥ /",
  "SA14abhisamu:abhs_2.31_1": "mārgasya ceṣyate tasya parihārataḥ //",
  "SA14abhisamu:3_0": "// abhisamayālaṅkāre prajñāpāramitopadeśaśāstre",
  "SA14abhisamu:3_1": "mārgajñatādhikāro dvitīyaḥ //",
  "SA14abhisamu:abhs_3.1_0": "nāpare na pare tīre nāntarāle tathoḥ sthitā /",
  "SA14abhisamu:abhs_3.1_1": "adhvanāṃ samatājñānāt prajñāpāramitāmatā //",
  "SA14abhisamu:abhs_3.2_0": "anupāyena dūraṃ sā sanimittopalambhataḥ /",
  "SA14abhisamu:abhs_3.2_1": "upāyakauśalenāsyāḥ samyagāsannatoditā //",
  "SA14abhisamu:abhs_3.3_0": "rūpādiskandhaśūnyatve dharmeṣu tryadhvageṣu ca /",
  "SA14abhisamu:abhs_3.3_1": "dānādau bodhipakṣeṣu caryāsaṃjñā vipakṣatā //",
  "SA14abhisamu:abhs_3.4_0": "dānādiṣvanahaṃkāraḥ pareṣāṃ tanniyojanam /",
  "SA14abhisamu:abhs_3.4_1": "saṅgakoṭīniṣedho 'yaṃ sukṣmaḥ saṅgo jinādiṣu //",
  "SA14abhisamu:abhs_3.5_0": "tadgāmbīryaṃ prakṛtyaiva vivekāddharmapaddhateḥ *iti* /",
  "SA14abhisamu:abhs_3.5_1": "ekaprakṛtikaṃ jñānaṃ dharmāṇāṃ saṅgavarjanam //",
  "SA14abhisamu:abhs_3.6_0": "dṛṣṭādipratiṣedhena tasyā durbodhatoditā *iti* /",
  "SA14abhisamu:abhs_3.6_1": "rūpādibhiravijñānāttadacintyatvamiṣyate //",
  "SA14abhisamu:abhs_3.7_0": "evaṃ kṛtvā yathokto vai jñeyaḥ sarvajñatānaye /",
  "SA14abhisamu:abhs_3.7_1": "ayaṃ vibhāgo niḥśoṣo vipakṣapratipakṣayoḥ //",
  "SA14abhisamu:abhs_3.8_0": "rūpādau tadanityādau tadapuriprapūrayoḥ /",
  "SA14abhisamu:abhs_3.8_1": "tadasaṅgatve caryāyā: prayogaḥ pratiṣedhataḥ //",
  "SA14abhisamu:abhs_3.9_0": "avikāro na kartā ca prayogo duṣkarastridhā /",
  "SA14abhisamu:abhs_3.9_1": "yathābhavyaṃ phalaprāpteravandhyo 'bhimataśca saḥ //",
  "SA14abhisamu:abhs_3.10_0": "aparapratyayo yaśca saptadhā khyātivedakaḥ /",
  "SA14abhisamu:abhs_3.10_1": "caturdhā mananā tasya rūpādau samatā matā //",
  "SA14abhisamu:abhs_3.11_0": "dharmajñānānvayajñānakṣāntijñānakṣaṇātmakaḥ /",
  "SA14abhisamu:abhs_3.11_1": "duḥkhādisatye dṛṅmārga eṣa sarvajñatānaye //",
  "SA14abhisamu:abhs_3.12_0": "rūpaṃ na nityaṃ nānityamatitāntaṃ viśuddhakam /",
  "SA14abhisamu:abhs_3.12_1": "anutpannāniruddhādi vyomābhaṃ lepavarjitam //",
  "SA14abhisamu:abhs_3.13_0": "parigraheṇa nirmuktamavyāhāraṃ svabhāvataḥ /",
  "SA14abhisamu:abhs_3.13_1": "pravyāhāreṇa nāsyārthaḥ pareṣu prāpyate yataḥ //",
  "SA14abhisamu:abhs_3.14_0": "nopalambhakṛdatyantaviśuddhirvyādhyasaṃbhavaḥ /",
  "SA14abhisamu:abhs_3.14_1": "apāyocChittyakalpatve phalasākṣātkriyāṃ prati //",
  "SA14abhisamu:abhs_3.15_0": "asaṃsargo nimittaiśca vastuni vyañjane dvaye /",
  "SA14abhisamu:abhs_3.15_1": "jñānasya yā cānutpattiriti sarvajñatākṣaṇāḥ //",
  "SA14abhisamu:abhs_3.16_0": "iti seyaṃ punaḥ seyaṃ seyaṃ khalu punastridhā /",
  "SA14abhisamu:abhs_3.16_1": "adhikāratrayasyaiṣā samāptiḥ paridīpitā //",
  "SA14abhisamu:4_0": "// abhisamayālaṅkāre prajñāpāramitopadeśaśāstre",
  "SA14abhisamu:4_1": "sarvajñatādhikāras tṛtīyaḥ //",
  "SA14abhisamu:abhs_4.1_0": "vastujñānaprakārāṇāmākārā iti lakṣaṇam /",
  "SA14abhisamu:abhs_4.1_1": "sarvajñatānāṃ traividyāt trividhā eva te matāḥ //",
  "SA14abhisamu:abhs_4.2_0": "asadākāramārabhya yāvanniścalatākṛtiḥ /",
  "SA14abhisamu:abhs_4.2_1": "catvāraḥ pratisatyaṃ te mārge pañcadaśa smṛtāḥ //",
  "SA14abhisamu:abhs_4.3_0": "hetau mārge ca duḥkhe ca nirodhe ca yathākramam /",
  "SA14abhisamu:abhs_4.3_1": "aṣṭau te sapta pañceti ṣoḍaśeti ca kīrtitāḥ //",
  "SA14abhisamu:abhs_4.4_0": "smṛtyupasthānamārabhya buddhatvākārapaścimāḥ /",
  "SA14abhisamu:abhs_4.4_1": "śiṣyāṇāṃ bodhisattvānāṃ buddhānāṃ ca yathākramam //",
  "SA14abhisamu:abhs_4.5_0": "saptatriṃśaccatustriṃśattriṃśannava ca te matāḥ /",
  "SA14abhisamu:abhs_4.5_1": "trisarvajñatvabhedena mārgasatyānurodhataḥ //",
  "SA14abhisamu:abhs_4.6_0": "kṛtādhikārā buddheṣu teṣūptaśubhamūlakāḥ /",
  "SA14abhisamu:abhs_4.6_1": "mitraiḥ sanāthāḥ kalyāṇairasyāḥ śravaṇabhājanam //",
  "SA14abhisamu:abhs_4.7_0": "buddhopāsanasaṃpraśnadānaśīlādicaryayā /",
  "SA14abhisamu:abhs_4.7_1": "udgrahadhāraṇādīnāṃ bhājanatvaṃ satāṃ matam //",
  "SA14abhisamu:abhs_4.8_0": "rūpādiṣvanavasthānātteṣu yoganiṣedhataḥ /",
  "SA14abhisamu:abhs_4.8_1": "tattathatāgambhīratvātteṣāṃ duravagāhataḥ //",
  "SA14abhisamu:abhs_4.9_0": "tadaprāmāṇyataḥ kṛcChāccireṇa pratibodhataḥ /",
  "SA14abhisamu:abhs_4.9_1": "vyākṛtāvavivartyatve niryāṇe sanirantare //",
  "SA14abhisamu:abhs_4.10_0": "āsannabodhe kṣipraṃ ca parārthe 'vṛddhyahānitaḥ /",
  "SA14abhisamu:abhs_4.10_1": "dharmādharmādyadṛṣṭau ca rupācintyādyadarśane //",
  "SA14abhisamu:abhs_4.11_0": "rūpādestannimittasya tadbhāvasyāvikalpakaḥ /",
  "SA14abhisamu:abhs_4.11_1": "phalaratnapradātā ca śuddhakaḥ sāvadhiśca saḥ //",
  "SA14abhisamu:abhs_4.12_0": "mārāṇāṃ śaktihānyādiścaturdaśavidho guṇaḥ /",
  "SA14abhisamu:abhs_4.12_1": "doṣāśca ṣaḍviboddhavyāścaturbhirdaśakaiḥ saha //",
  "SA14abhisamu:abhs_4.13_0": "lakṣyate yena tajjñeyaṃ lakṣaṇaṃ trividhaṃ ca tat /",
  "SA14abhisamu:abhs_4.13_1": "jñānaṃ viśeṣaḥ kāritraṃ svabhāvo yaśca lakṣyate //",
  "SA14abhisamu:abhs_4.14_0": "tathāgatasya nirvṛttau loke cālujyanātmake /",
  "SA14abhisamu:abhs_4.14_1": "sattvānāṃ cittacaryāsu tatsaṃkṣepe bahirgatau //",
  "SA14abhisamu:abhs_4.15_0": "akṣayākāratāyāṃ ca sarāgādau pravistṛte /",
  "SA14abhisamu:abhs_4.15_1": "mahadgate 'pramāṇe ca vijñāne cānidarśane //",
  "SA14abhisamu:abhs_4.16_0": "adṛśyacitajñāne ca tadunmiñjādisaṃjñakam /",
  "SA14abhisamu:abhs_4.16_1": "punastathatākāreṇa teṣāṃ jñānamataḥ param //",
  "SA14abhisamu:abhs_4.17_0": "tathatāyāṃ munerbodhe tatparākhyānamityayam /",
  "SA14abhisamu:abhs_4.17_1": "sarvajñatādhikāreṇa jñānalakṣaṇasaṃgrahaḥ //",
  "SA14abhisamu:abhs_4.18_0": "śūnyatve sānimitte c praṇidhānavivarjite /",
  "SA14abhisamu:abhs_4.18_1": "anutpādanirodhādau dharmatāyā akopane //",
  "SA14abhisamu:abhs_4.19_0": "asaṃskare 'vikalpe ca prabhedālakṣaṇatvayoḥ /",
  "SA14abhisamu:abhs_4.19_1": "mārgajñatādhikāreṇa jñānalakṣaṇamiṣyate //",
  "SA14abhisamu:abhs_4.20_0": "svadharmamupaniśritya vihāre tasya satkṛtau /",
  "SA14abhisamu:abhs_4.20_1": "gurūtve mānanāyāṃ ca tatpūjākṛtakatvayoḥ //",
  "SA14abhisamu:abhs_4.21_0": "sarvatra vṛttimajjñānamadṛṣṭasya ca darśakam /",
  "SA14abhisamu:abhs_4.21_1": "lokasya śūnyatākārasūcakajñāpakākṣagam //",
  "SA14abhisamu:abhs_4.22_0": "acintyaśāntatādarśi lokasaṃjñānirodhi ca /",
  "SA14abhisamu:abhs_4.22_1": "jñānalakṣaṇamityuktaṃ sarvākārajñatānaye //",
  "SA14abhisamu:abhs_4.23_0": "acityādiviśeṣeṇa viśiṣṭaiḥ satyagocaraiḥ /",
  "SA14abhisamu:abhs_4.23_1": "viśeṣalakṣaṇaṃ ṣaḍbhirdaśabhiścoditaṃ kṣaṇaiḥ //",
  "SA14abhisamu:abhs_4.24_0": "acintyātulyate meyasaṃkhyeyāsamatikramau /",
  "SA14abhisamu:abhs_4.24_1": "sarvāryasaṃgraho vijñavedyāsādhāraṇajñate //",
  "SA14abhisamu:abhs_4.25_0": "kṣiprajñānyunapūrṇatve pratipatsamudāgamau /",
  "SA14abhisamu:abhs_4.25_1": "ālambanaṃ ca sādhāraṃ sākalyaṃ saṃparigrahaḥ //",
  "SA14abhisamu:abhs_4.26_0": "anāsvādaśca vijñeyo viśeṣaḥ ṣoḍaśātmakaḥ /",
  "SA14abhisamu:abhs_4.26_1": "viśeṣamārgā mārgebhyo yenānyebhyo viśiṣyate //",
  "SA14abhisamu:abhs_4.27_0": "hitaṃ sukhaṃ ca trāṇaṃ ca śaraṇaṃ layanaṃ nṛṇām /",
  "SA14abhisamu:abhs_4.27_1": "parāyaṇaṃ ca dvīpaṃ ca pariṇāyakasaṃjñakam //",
  "SA14abhisamu:abhs_4.28_0": "anābhogaṃ tribhiryānaiḥ phalāsākṣātkriyātmakam /",
  "SA14abhisamu:abhs_4.28_1": "paścimaṃ gatikāritramidaṃ kāritralakṣaṇam //",
  "SA14abhisamu:abhs_4.29_0": "kleśaliṅganimittānāṃ vipakṣapratipakṣayoḥ /",
  "SA14abhisamu:abhs_4.29_1": "viveko duṣkaraikāntāvuddeśo 'nupalambhakaḥ //",
  "SA14abhisamu:abhs_4.30_0": "niṣiddhābhiniveśaśca yaścālambanasaṃjñakaḥ /",
  "SA14abhisamu:abhs_4.30_1": "vipratyayo 'vighātī ca so 'padāgatyajātikaḥ //",
  "SA14abhisamu:abhs_4.31_0": "tathatānupalambhaśca svabhāvaḥ ṣoḍaśātmakaḥ /",
  "SA14abhisamu:abhs_4.31_1": "lakṣmeva lakṣyate ceticaturthaṃ lakṣaṇaṃ matam //",
  "SA14abhisamu:abhs_4.32_0": "animittapradānādisamudāgamakauśalam /",
  "SA14abhisamu:abhs_4.32_1": "sarvākārāvabodhe 'smin mokṣabhagīyamiṣyate //",
  "SA14abhisamu:abhs_4.33_0": "buddhādyālambanā śraddhā vīryaṃ dānādigocaram /",
  "SA14abhisamu:abhs_4.33_1": "smṛtirāśayasaṃpattiḥ samādhiravikalpanā //",
  "SA14abhisamu:abhs_4.34_0": "dharmeṣu sarvairākārairjñānaṃ prajñeti pañcadhā /",
  "SA14abhisamu:abhs_4.34_1": "tīkṣṇai subodhā saṃbodhirdurbodhā mṛdubhirmatā //",
  "SA14abhisamu:abhs_4.35_0": "ālambanaṃ sarvasattvā ūṣmaṇāmiha śakyate /",
  "SA14abhisamu:abhs_4.35_1": "samacittādirākārasteṣveva daśadhoditaḥ //",
  "SA14abhisamu:abhs_4.36_0": "svayaṃ pāpānnivṛttasya dānādyeṣu sthitasya ca /",
  "SA14abhisamu:abhs_4.36_1": "tayorniyojanānyeṣāṃ varṇavādānukulate //",
  "SA14abhisamu:abhs_4.37_0": "mūrdhagam svaparādhāraṃ satyajñānaṃ tathā kṣamā /",
  "SA14abhisamu:abhs_4.37_1": "tathāgradharmā vijñeyāḥ sattvānāṃ pācanādibhiḥ //",
  "SA14abhisamu:abhs_4.38_0": "nirvedhaṅgānyupādaya darśanābhyāsamārgayoḥ /",
  "SA14abhisamu:abhs_4.38_1": "ye bodhisattvā vartante so 'trāvaivartiko gaṇaḥ //",
  "SA14abhisamu:abhs_4.39_0": "rūpādibhyo nivṛttyādyairliṅgairviṃśatidheritaiḥ /",
  "SA14abhisamu:abhs_4.39_1": "nirvedhāṅgasthitasyedamavaivartikalakṣaṇam //",
  "SA14abhisamu:abhs_4.40_0": "rūpādibhyo nivṛttiśca vicikitsākṣaṇakṣayau /",
  "SA14abhisamu:abhs_4.40_1": "ātmanaḥ kuśalasthasya pareṣāṃ tanniyojanam //",
  "SA14abhisamu:abhs_4.41_0": "parādhāraṃ ca dānādi gambhire 'rthe 'pyakāṅkṣaṇam /",
  "SA14abhisamu:abhs_4.41_1": "maitraṃ kāyādyasaṃvāsaḥ pañcadhāvaraṇena ca //",
  "SA14abhisamu:abhs_4.42_0": "sarvānuśayahānaṃ ca smṛtisaṃprajñatā suci /",
  "SA14abhisamu:abhs_4.42_1": "civarādiśarīre ca kṛmīṇāmasamudbhavaḥ //",
  "SA14abhisamu:abhs_4.43_0": "cittākauṭilyamādānaṃ dhūtasyāmatsarāditā /",
  "SA14abhisamu:abhs_4.43_1": "dharmatāyuktagāmitvaṃ lokārthaṃ narakaiṣaṇā //",
  "SA14abhisamu:abhs_4.44_0": "parairaneyatā mārasyānyamārgopadeśinaḥ /",
  "SA14abhisamu:abhs_4.44_1": "māra ityavabodhaśca caryā buddhānumoditā //",
  "SA14abhisamu:abhs_4.45_0": "ūṣmamūrdhasu sa kṣāntiṣvagradharmeṣvavasthitaḥ /",
  "SA14abhisamu:abhs_4.45_1": "liṅgairamībhirviśatyā saṃbodherna vivartate //",
  "SA14abhisamu:abhs_4.46_0": "kṣāntijñānakṣaṇaḥ ṣaṭ ca pañca pañca ca dṛkpathe /",
  "SA14abhisamu:abhs_4.46_1": "bodhisattvasya vijñeyamavaivartikalakṣaṇam //",
  "SA14abhisamu:abhs_4.47_0": "rūpādisaṃjñāvyāvṛttirdārḍhyaṃ cittasya hinayoḥ /",
  "SA14abhisamu:abhs_4.47_1": "yānayorvinivṛttiśca dhyānādyaṅgaparikṣayaḥ //",
  "SA14abhisamu:abhs_4.48_0": "kāyacetolaghutvaṃ ca kāmasevābhyupāyikī /",
  "SA14abhisamu:abhs_4.48_1": "sadaiva brahmacāritvamājīvasya viśuddhatā //",
  "SA14abhisamu:abhs_4.49_0": "skandhādavantarāyeṣu saṃbhāre sendriyādike /",
  "SA14abhisamu:abhs_4.49_1": "samare matsarādau ca neti yogānuyogayoḥ //",
  "SA14abhisamu:abhs_4.50_0": "vihārapratiṣedhaśca dharmasyāṇoralabdhatā /",
  "SA14abhisamu:abhs_4.50_1": "niścitatvaṃ svabhumau ca bhūmitritayasaṃsthitiḥ //",
  "SA14abhisamu:abhs_4.51_0": "dharmārthaṃ jīvitatyāga ityamī ṣoḍaśa kṣaṇāḥ /",
  "SA14abhisamu:abhs_4.51_1": "avaivartikaliṅgāni dṛṅmārgasthasya dhīmataḥ //",
  "SA14abhisamu:abhs_4.52_0": "gambhiro bhāvanāmārgo gāmbhīryaṃ śunyatādikam /",
  "SA14abhisamu:abhs_4.52_1": "samāropāpavādāntamuktatā sā gabhīratā //",
  "SA14abhisamu:abhs_4.53_0": "cintātulananidhyānānyabhīkṣṇaṃ bhāvanāpathaḥ /",
  "SA14abhisamu:abhs_4.53_1": "nirvedhāṅgeṣu dṛṅmārge bhāvanāmārga eva ca //",
  "SA14abhisamu:abhs_4.54_0": "prābandhakatvādiṣṭo 'sau navadhā ca prakārataḥ /",
  "SA14abhisamu:abhs_4.54_1": "mṛdumadhyādhimātrāṇāṃ punarmṛdvādibhedataḥ //",
  "SA14abhisamu:abhs_4.55_0": "asaṃkhyeyādinirdeśāḥ paramārthena na kṣamāḥ /",
  "SA14abhisamu:abhs_4.55_1": "kṛpāniṣyandabhūtāste saṃvṛtyābhimatā muneḥ //",
  "SA14abhisamu:abhs_4.56_0": "hānivṛddhī na yujyete nirālāpasya vastunaḥ /",
  "SA14abhisamu:abhs_4.56_1": "bhāvanākhyena kiṃ hinaṃ vartmanā kimudāgatam //",
  "SA14abhisamu:abhs_4.57_0": "yathā bodhistathaivāsāviṣṭasyārthasya sādhakaḥ /",
  "SA14abhisamu:abhs_4.57_1": "tathatālakṣaṇā bodhiḥ so 'pi tallakṣaṇo mataḥ //",
  "SA14abhisamu:abhs_4.58_0": "pūrveṇa bodhirno yuktā manasā paścimena vā /",
  "SA14abhisamu:abhs_4.58_1": "dīpadṛṣṭāntayogenagambhīrā dharmatāṣṭadhā //",
  "SA14abhisamu:abhs_4.59_0": "utpāde ca nirodhe ca tathatāyāṃ gabhīratā /",
  "SA14abhisamu:abhs_4.59_1": "jñeye dāne ca caryāyāmadvayopāyakauśale ca //",
  "SA14abhisamu:abhs_4.60_0": "svapnopamatvāddharmāṇāṃ bhavaśāntyorakalpanā /",
  "SA14abhisamu:abhs_4.60_1": "karmābhāvādicodyānāṃ parihārā yathoditāḥ //",
  "SA14abhisamu:abhs_4.61_0": "sattvalokasya yā śuddhistasyāḥ suddhyupahārataḥ /",
  "SA14abhisamu:abhs_4.61_1": "tathā bhājanalokasya buddhakṣetrasya śuddhatā //",
  "SA14abhisamu:abhs_4.62_0": "viṣayo 'sya prayogaśca śātravāṇāmatikramaḥ /",
  "SA14abhisamu:abhs_4.62_1": "apratiṣṭho yathāvedhamasādhāraṇalakṣaṇaḥ //",
  "SA14abhisamu:abhs_4.63_0": "asakto 'nupalambhaśca nimittapraṇidhikṣataḥ /",
  "SA14abhisamu:abhs_4.63_1": "lalliṅgaścāpramāṇaśca daśadhopāyakauśalam //",
  "SA14abhisamu:5_0": "// abhisamayālaṅkāre prajñāpāramitopadeśaśāstre",
  "SA14abhisamu:5_1": "sarvākārābhisaṃbodhādhikāraś caturthaḥ //",
  "SA14abhisamu:abhs_5.1_0": "svapnāntare 'pi svapnābhasarvadharmekṣaṇādikam /",
  "SA14abhisamu:abhs_5.1_1": "murdhaprāptasya yogasya liṅgaṃ dvādaśadhā matam //",
  "SA14abhisamu:abhs_5.2_0": "jambudvipajaneyattābuddhapūjāśubhādikām /",
  "SA14abhisamu:abhs_5.2_1": "upamāṃ bahudhā kṛtvā vivṛddhiḥ ṣoḍaśātmikā //",
  "SA14abhisamu:abhs_5.3_0": "trisarvajñatvadharmāṇāṃ paripuriranuttarā /",
  "SA14abhisamu:abhs_5.3_1": "aparityaktasattvārthā nirūḍhirabhidhīyate //",
  "SA14abhisamu:abhs_5.4_0": "caturdvipakasāhasradvitrisāhasrakopamaḥ /",
  "SA14abhisamu:abhs_5.4_1": "kṛtvā puṇyabahutvena samādhiḥ parikīrtitaḥ //",
  "SA14abhisamu:abhs_5.5_0": "pravṛttau ca nivṛttau ca pratyekaṃ tau navātmakau /",
  "SA14abhisamu:abhs_5.5_1": "grāhyau vikalpau vijñeyāvayāthāviṣayātmakau //",
  "SA14abhisamu:abhs_5.6_0": "dravyaprajñaptisatsattvavikalpau grāhakau matau /",
  "SA14abhisamu:abhs_5.6_1": "pṛthagjanāryabhedena pratyekaṃ tau navātmakau //",
  "SA14abhisamu:abhs_5.7_0": "grāhyau cenna tathā sto 'rthau kasya tau grāhakau matau /",
  "SA14abhisamu:abhs_5.7_1": "iti grāhakabhāvena śunyatālakṣaṇaṃ tayoḥ //",
  "SA14abhisamu:abhs_5.8_0": "eṣa svabhāve gotre ca pratipatsamudāgame /",
  "SA14abhisamu:abhs_5.8_1": "jñānasyālambanābhrāntau pratipakṣavipakṣayoḥ //",
  "SA14abhisamu:abhs_5.9_0": "svasminnadhigame kartṛtatkāritrakriyāphale /",
  "SA14abhisamu:abhs_5.9_1": "pravṛttipakṣādhiṣṭhāno vikalpo navadhā mataḥ //",
  "SA14abhisamu:abhs_5.10_0": "bhavaśāntiprapātitvānnyūnatve 'dhigamasya ca /",
  "SA14abhisamu:abhs_5.10_1": "parigrahasyābhāve ca vaikalye pratipadgate //",
  "SA14abhisamu:abhs_5.11_0": "parapratyayagāmitve samuddeśanivartane /",
  "SA14abhisamu:abhs_5.11_1": "prādeśikatve nānātve sthānaprasthānamohayoḥ //",
  "SA14abhisamu:abhs_5.12_0": "pṛṣṭhato gamane ceti vikalpo 'yaṃ navātmakaḥ /",
  "SA14abhisamu:abhs_5.12_1": "nivṛttipakṣādhiṣṭhānaḥ śrāvakādimanobhavaḥ //",
  "SA14abhisamu:abhs_5.13_0": "grāhakaḥ prathamo jñeyo gragaṇapratimokṣaṇe /",
  "SA14abhisamu:abhs_5.13_1": "manaskriyāyāṃ dhātūnāmupaśleṣe trayasya ca //",
  "SA14abhisamu:abhs_5.14_0": "sthāne cābhiniveśe ca prajñaptau dharmavastunaḥ /",
  "SA14abhisamu:abhs_5.14_1": "saktau ca pratipakṣe ca yathecChaṃ ca gatikṣatau //",
  "SA14abhisamu:abhs_5.15_0": "yathoddeśamaniryāṇe mārgāmārgāvadhāraṇe /",
  "SA14abhisamu:abhs_5.15_1": "sanirodhe samutpāde vastuyogaviyogayoḥ //",
  "SA14abhisamu:abhs_5.16_0": "sthāne gotrasya nāśe ca prārthanāhetvabhāvayoḥ /",
  "SA14abhisamu:abhs_5.16_1": "pratyarthikopalambhe ca vikalpo grāhako 'paraḥ //",
  "SA14abhisamu:abhs_5.17_0": "bodhau sandarśanānyeṣāṃ taddhetośca parindanā /",
  "SA14abhisamu:abhs_5.17_1": "tatprāptyanantaro hetuḥ puṇyabāhulyalakṣaṇaḥ //",
  "SA14abhisamu:abhs_5.18_0": "kṣayānutpādayorjñāne malānāṃ bodhirūcyate /",
  "SA14abhisamu:abhs_5.18_1": "kṣayābhāvādanutpādātte hi jñeye yathākramam //",
  "SA14abhisamu:abhs_5.19_0": "prakṛtāvaniruddhāyāṃ darśanākhyena vartmanā /",
  "SA14abhisamu:abhs_5.19_1": "vikalpajātaṃ kiṃ kṣīṇaṃ vānutpattimāgatam //",
  "SA14abhisamu:abhs_5.20_0": "sattā ca nāma dharmāṇāṃ jñeye cāvaraṇakṣayaḥ /",
  "SA14abhisamu:abhs_5.20_1": "kathyate yatparaiḥ śāsturatra vismīyate mayā //",
  "SA14abhisamu:abhs_5.21_0": "nāpaneyamataḥ kiṃcitprakṣeptavyaṃ na kiṃcana /",
  "SA14abhisamu:abhs_5.21_1": "draṣṭavyaṃ bhūtato bhūtaṃ bhūtadarśī vimucyate //",
  "SA14abhisamu:abhs_5.22_0": "ekaikasyaiva dānādau teṣāṃ yaḥ saṃgraho mithaḥ /",
  "SA14abhisamu:abhs_5.22_1": "sa ekakṣaṇikaḥ kṣāntisaṃgṛhīto 'tra dṛkpathe //",
  "SA14abhisamu:abhs_5.23_0": "sa samādhiṃ samāpadya tataḥ siṃhavijṛmbhitam /",
  "SA14abhisamu:abhs_5.23_1": "anulomaṃ vilomaṃ pratītyotpādamīkṣate //",
  "SA14abhisamu:abhs_5.24_0": "kāmāptamavadhīkṛtya vijñānamasamāhitam /",
  "SA14abhisamu:abhs_5.24_1": "sanirodhāḥ samāpattīrgatvāgamya nava dvidhā //",
  "SA14abhisamu:abhs_5.25_0": "ekadvitricatuḥpañcaṣaṭsaptāṣṭavyatikramāt /",
  "SA14abhisamu:abhs_5.25_1": "avaskandasamāpattirāniroodhamatulyatā //",
  "SA14abhisamu:abhs_5.26_0": "saṃkṣepe vistare buddhaiḥ sanāthyenāparigrahe /",
  "SA14abhisamu:abhs_5.26_1": "traikālike guṇābhāve śreyasastrividhe pathi //",
  "SA14abhisamu:abhs_5.27_0": "eko grāhyavikalpo 'yaṃ prayogākāragocaraḥ /",
  "SA14abhisamu:abhs_5.27_1": "dvitīyaścittacaittānāṃ pravṛttiviṣayo mataḥ //",
  "SA14abhisamu:abhs_5.28_0": "anutpādastu cittasya bodhimaṇḍāmanaskriyā /",
  "SA14abhisamu:abhs_5.28_1": "hīnayānamanaskārau saṃbodheramanaskṛtiḥ //",
  "SA14abhisamu:abhs_5.29_0": "bhāvane 'bhāvane caiva tadviparyaya eva ca /",
  "SA14abhisamu:abhs_5.29_1": "ayathārthaśca vijñeyo vikalpo bhāvanāpathe //",
  "SA14abhisamu:abhs_5.30_0": "grāhakaḥ prathamo jñeyaḥ sattvaprajñaptigocaraḥ /",
  "SA14abhisamu:abhs_5.30_1": "dharmaprajñaptyaśūnyatve saktipravicayātmakaḥ //",
  "SA14abhisamu:abhs_5.31_0": "kṛtena vastuno yānatritaye ca sa kīrtitaḥ /",
  "SA14abhisamu:abhs_5.31_1": "dakṣiṇāyā aśuddhau ca caryāyāśca vikopane //",
  "SA14abhisamu:abhs_5.32_0": "sattvaprajñaptitaddhetuviṣayo navadhāparaḥ /",
  "SA14abhisamu:abhs_5.32_1": "bhāvanāmārgasaṃbuddho vipakṣastadvighātataḥ //",
  "SA14abhisamu:abhs_5.33_0": "sarvajñatānāṃ tisR^īṇāṃ yathāsvaṃ trividhāvṛtau /",
  "SA14abhisamu:abhs_5.33_1": "śāntimārge tathatādisaṃprayogaviyogayoḥ //",
  "SA14abhisamu:abhs_5.34_0": "asamatve ca duḥkhādau kleśānāṃ prakṛtāvapi /",
  "SA14abhisamu:abhs_5.34_1": "dvayābhāve ca saṃmohe vikalpaḥ paścimo mataḥ //",
  "SA14abhisamu:abhs_5.35_0": "āsāṃ kṣaye satītīnāṃ cirāyocChvasitā iva /",
  "SA14abhisamu:abhs_5.35_1": "sarvākārajagatsaukhyasādhanā guṇasaṃpadaḥ //",
  "SA14abhisamu:abhs_5.36_0": "sarvāḥ sarvābhisāreṇa nikāmaphalaśālinam /",
  "SA14abhisamu:abhs_5.36_1": "bhajante taṃ mahāsattvaṃ mahodadhimivāpagāḥ //",
  "SA14abhisamu:abhs_5.37_0": "trisāhasrajanaṃ śiṣyakhaḍgādhigamasaṃpadi /",
  "SA14abhisamu:abhs_5.37_1": "bodhisattvasya ca nyāmo pratiṣṭāpya śubhopamāḥ //",
  "SA14abhisamu:abhs_5.38_0": "kṛtvā puṇyabahutvena buddhatvapteranantaraḥ /",
  "SA14abhisamu:abhs_5.38_1": "ānantaryasamādhiḥ sa sarvākārajñatā ca tat //",
  "SA14abhisamu:abhs_5.39_0": "ālambanamabhāvo 'sya smṛtiścādhipatirmataḥ /",
  "SA14abhisamu:abhs_5.39_1": "ākāraḥ śāntatā cātra jalpājalpipravādinām //",
  "SA14abhisamu:abhs_5.40_0": "ālambanopapattau ca tatsvabhāvāvadhārraṇe /",
  "SA14abhisamu:abhs_5.40_1": "sarvākārajñatājñāne paramārthe sasaṃvṛtau //",
  "SA14abhisamu:abhs_5.41_0": "prayoge triṣu ratneṣu sopāye samaye muneḥ /",
  "SA14abhisamu:abhs_5.41_1": "viparyāse samārge ca pratipakṣavipakṣayoḥ //",
  "SA14abhisamu:abhs_5.42_0": "lakṣaṇe bhāvanāyāṃ ca matā vipratipattayaḥ /",
  "SA14abhisamu:abhs_5.42_1": "sarvākārajñatādhārā ṣoḍhā daśa ca cādinām //",
  "SA14abhisamu:6_0": "// abhisamayālaṅkāre prajñāpāramitopadeśaśāstre",
  "SA14abhisamu:6_1": "mūrdhābhisamayādhikāraḥ pañcamaḥ //",
  "SA14abhisamu:abhs_6.1_0": "dānena prajñayā yāvadbuddhādau smṛtibhiśca sā /",
  "SA14abhisamu:abhs_6.1_1": "dharmābhāvasvabhāvenetyanupūrvakriyā matā //",
  "SA14abhisamu:7_0": "// abhisamayālaṅkāre prajñāpāramitopadeśaśāstre",
  "SA14abhisamu:7_1": "anupurvābhisamayādhikāraḥ ṣaṣṭhaḥ //",
  "SA14abhisamu:abhs_7.1_0": "anūsravāṇāṃ sarveṣāmekaikenāpi saṃgrahāt /",
  "SA14abhisamu:abhs_7.1_1": "ekakṣaṇāvabodho 'yaṃ jñeyo dānādinā muneḥ //",
  "SA14abhisamu:abhs_7.2_0": "aradhaṭṭaṃ yathaikāpi padikā purūṣeritā /",
  "SA14abhisamu:abhs_7.2_1": "sakṛtsarvaṃ calayati jñānamekakṣaṇe tathā //",
  "SA14abhisamu:abhs_7.3_0": "vipākadharmatāvasthā sarvaśuklamayī yadā /",
  "SA14abhisamu:abhs_7.3_1": "prajñāpāramitā jātā jñānamekakṣaṇe tadā //",
  "SA14abhisamu:abhs_7.4_0": "svapnopameṣu dharmeṣu sthitvā dānādicaryā /",
  "SA14abhisamu:abhs_7.4_1": "alakṣatvaṃ dharmāṇāṃ kṣaṇenaikena vindati //",
  "SA14abhisamu:abhs_7.5_0": "svapnaṃ taddarśinaṃ caiva dvayayogena nekṣate /",
  "SA14abhisamu:abhs_7.5_1": "dharmāṇāmadvayaṃ tattvaṃ kṣaṇenaikenapaṣyati //",
  "SA14abhisamu:8_0": "// abhisamayālaṅkāre prajñāpāramitopadeśaśāstre",
  "SA14abhisamu:8_1": "ekakṣaṇābhisamayādhikāraḥ saptamaḥ //",
  "SA14abhisamu:abhs_8.1_0": "sarvākārāṃ viśuddhiṃ ye dharmāḥ prāptā nirāsravāḥ /",
  "SA14abhisamu:abhs_8.1_1": "svābhāvikomuneḥ kāyasteśāṃ prakṛtilakṣaṇaḥ //",
  "SA14abhisamu:abhs_8.2_0": "bodhipakṣāpramāṇāni vimokṣā anūpurvaśaḥ /",
  "SA14abhisamu:abhs_8.2_1": "navātmikā samāpattiḥ kṛtsnaṃ daśavidhātmikam //",
  "SA14abhisamu:abhs_8.3_0": "abhibhvāyatanānyaṣṭaprakārāṇi prabhedataḥ /",
  "SA14abhisamu:abhs_8.3_1": "araṇā praṇidhijñānamabhijñāḥ pratisaṃvidaḥ //",
  "SA14abhisamu:abhs_8.4_0": "sarvākārāścatasno 'thaśuddhayo vaśitā daśa //",
  "SA14abhisamu:abhs_8.4_1": "balāni daśa catvāri vaiśāradyānyārakṣaṇam //",
  "SA14abhisamu:abhs_8.5_0": "trividhaṃ smṛtyupasthānaṃ tridhāsaṃmoṣadharmatā /",
  "SA14abhisamu:abhs_8.5_1": "vāsanāyāḥ samuddhāto mahati karūṇā jane //",
  "SA14abhisamu:abhs_8.6_0": "āveṇikā munereva dharmā ye 'ṣṭādaśeritāḥ /",
  "SA14abhisamu:abhs_8.6_1": "sarvākārajñatā ceti dharmakāyo 'bhidhīyate //",
  "SA14abhisamu:abhs_8.7_0": "śravakasyāraṇādṛṣṭernṛkleśaparihāritā /",
  "SA14abhisamu:abhs_8.7_1": "tatkleśasrotaucChittyai grāmādiṣu jināraṇā //",
  "SA14abhisamu:abhs_8.8_0": "anābhogamanāsaṅmavyāghātaṃ sadā sthitam /",
  "SA14abhisamu:abhs_8.8_1": "sarvapraśnāpanudvauddhaṃ praṇidhijñānamiṣyate //",
  "SA14abhisamu:abhs_8.9_0": "paripākaṃ gate hetau yasya yasya yadā yadā /",
  "SA14abhisamu:abhs_8.9_1": "hitaṃ bhavati kartavyaṃ prathate tasya tasya saḥ //",
  "SA14abhisamu:abhs_8.10_0": "varṣatyapi hi parjanye naiva bījaṃ prarohati /",
  "SA14abhisamu:abhs_8.10_1": "samutpāde 'pi buddhānāṃ nābhavyo bhadramaśrute //",
  "SA14abhisamu:abhs_8.11_0": "iti kāritravaipulyāt buddho vyāpī nirūcyate /",
  "SA14abhisamu:abhs_8.11_1": "akṣayatvācca tasyaiva nitya ityapi kathyate //",
  "SA14abhisamu:abhs_8.12_0": "dvātriṃśallakṣaṇāśītivyañjanātmā munerayam /",
  "SA14abhisamu:abhs_8.12_1": "sāṃbhogiko mataḥ kāyo mahāyānopabhogataḥ //",
  "SA14abhisamu:abhs_8.13_0": "cakrāṅkahastaḥ krākurmapādo jālāvāddhāṅgulipāṇipādaḥ /",
  "SA14abhisamu:abhs_8.13_1": "karau sapādau tarūṇau mṛdū ca mamutsadaiḥ saptabhirāśrayo 'sya //",
  "SA14abhisamu:abhs_8.14_0": "dīrghāṅgulirvyāyatapārṣṇigātraṃ prājyaṃ tvṛjucChaṅkhapadordhvaromā /",
  "SA14abhisamu:abhs_8.14_1": "eṇeyajaṅghaśca paṭūrūbāhuḥ kośāvanaddhottamabastiguhyaḥ //",
  "SA14abhisamu:abhs_8.15_0": "suvarṇavarṇḥ pratanucChaviśca pradakṣiṇaikaikasujātromā /",
  "SA14abhisamu:abhs_8.15_1": "ūūrṇāṅkitāsyo haripūrvakāyaḥ skandhau vṛtāvasya citāntarāṃsaḥ //",
  "SA14abhisamu:abhs_8.16_0": "hīno rasaḥ khyāti rasottamo 'sya nyagrodhavanmāṇḍalatulyamūrtiḥ /",
  "SA14abhisamu:abhs_8.16_1": "uṣīṣamūrdhā pṛthucārūjihvo brahmasvaraḥ siṃhahanuḥ suśuklāḥ //",
  "SA14abhisamu:abhs_8.17_0": "tulyāḥ pramāṇe 'viralāsca dantā anyūnasaṃkhyā daśikāścatasraḥ /",
  "SA14abhisamu:abhs_8.17_1": "nīlekśaṇe govṛṣapakṣmanetro dvātriṃśadetāni hi lakṣaṇāni //",
  "SA14abhisamu:abhs_8.18_0": "yasya yasyātra yo heturlakṣaṇasya prasādhakaḥ /",
  "SA14abhisamu:abhs_8.18_1": "tasya tasya prapūryāyaṃ samudāgamalakṣaṇaḥ //",
  "SA14abhisamu:abhs_8.19_0": "gurūṇāmanuyānādirdṛḍhatā saṃvaraṃ prati /",
  "SA14abhisamu:abhs_8.19_1": "saṃgrahāsevanaṃ dānaṃ praṇitasya ca vastunaḥ //",
  "SA14abhisamu:abhs_8.20_0": "vadhyamokṣasamādānāṃ vivR6iddhiḥ kuśalasya ca /",
  "SA14abhisamu:abhs_8.20_1": "ityādiko yathāsutraṃ heturlakṣaṇasādhakaḥ //",
  "SA14abhisamu:abhs_8.21_0": "tāmrāḥ snigdhāśca tuṅgāśca nakhā aṅgulayo muneḥ /",
  "SA14abhisamu:abhs_8.21_1": "vṛttāścitānupūrvāśca guḍhā nirgranthyaḥ śirāḥ //",
  "SA14abhisamu:abhs_8.22_0": "guḍhau gulphau samau pādau siṃhebhadvijagopateḥ /",
  "SA14abhisamu:abhs_8.22_1": "vikrāntaṃ dakṣiṇaṃ cārūgamanamṛjuvṛttatā //",
  "SA14abhisamu:abhs_8.23_0": "mṛṣṭānupūrte medhyamṛdutve śuddhagātratā /",
  "SA14abhisamu:abhs_8.23_1": "pūrṇavyañjanatā cārupṛthumaṇḍalagāratā //",
  "SA14abhisamu:abhs_8.24_0": "samakramatvaṃ śuddhatvaṃ netrayoḥ sukumāratā /",
  "SA14abhisamu:abhs_8.24_1": "adīnossadagātratve susaṃhatanagātratā //",
  "SA14abhisamu:abhs_8.25_0": "suvibhaktāṅgatā dhvāntapradhvastālokaśuddhatā /",
  "SA14abhisamu:abhs_8.25_1": "vṛttamṛṣṭākṣāmakukṣitāśca gabhiratā //",
  "SA14abhisamu:abhs_8.26_0": "dakṣiṇāvartatā nābheḥ samantaddarśanīyatā /",
  "SA14abhisamu:abhs_8.26_1": "samācāraḥ śuciḥ kālatilakāpagatā tanuḥ //",
  "SA14abhisamu:abhs_8.27_0": "karau tulamṛdūsnigdhagambhīrāyatalekhatā /",
  "SA14abhisamu:abhs_8.27_1": "nātyāyataṃ vaco bimbapratibimbopamauṣṭhatā //",
  "SA14abhisamu:abhs_8.28_0": "mṛdvī tanvī ca raktā ca jihvā jimūtaghoṣatā /",
  "SA14abhisamu:abhs_8.28_1": "cārūmañjasvaro daṃṣṭrā vṛttāstīkṣṇāḥ sitāḥ samāḥ //",
  "SA14abhisamu:abhs_8.29_0": "anupurvī gatāstuṅgā nāsikā paraṃ śuciḥ /",
  "SA14abhisamu:abhs_8.29_1": "viśale nayane pakṣmacitaṃ padmadalākṣitā //",
  "SA14abhisamu:abhs_8.30_0": "āyataślakṣṇasusnigdhasamaromnau bhruvau bhujau /",
  "SA14abhisamu:abhs_8.30_1": "pīnāyatau samau karṇāvupaghātavivarjitau //",
  "SA14abhisamu:abhs_8.31_0": "lalāṭamaparimlānaṃ prṛthupūrṇottamāṅgatā /",
  "SA14abhisamu:abhs_8.31_1": "bhramarābhāścitāḥ ślakṣṇā asaṃlulitamūrtayaḥ //",
  "SA14abhisamu:abhs_8.32_0": "keśā aparuṣāḥ puṃsāṃ saurabhyānyapahāriṇaḥ /",
  "SA14abhisamu:abhs_8.32_1": "śrīvatsaḥ svastikaṃ ceti buddhānuvyañjanaṃ matam //",
  "SA14abhisamu:abhs_8.33_0": "karoti yena citrāṇi hitāni jagataḥ samam /",
  "SA14abhisamu:abhs_8.33_1": "ā bhavātso 'nupacChinnaḥ kayo nairmāṇiko muneḥ //",
  "SA14abhisamu:abhs_8.34_0": "tathā karmāpyanucChinnamasyāsaṃsāramiṣyate /",
  "SA14abhisamu:abhs_8.34_1": "gatīnāṃ śamanaṃ karma saṃgrahe ca caturvidhe //",
  "SA14abhisamu:abhs_8.35_0": "niveśanaṃ sasaṃkleśe vyavadānāvabodhane /",
  "SA14abhisamu:abhs_8.35_1": "sattvānāmarthayāthātmye ṣaṭsu pāramitāsu ca //",
  "SA14abhisamu:abhs_8.36_0": "buddhamārge prakṛtyaivaśunyatāyāṃ dvayakṣaye /",
  "SA14abhisamu:abhs_8.36_1": "saṃkete 'nupalambhe ca paripāke ca hehinām //",
  "SA14abhisamu:abhs_8.37_0": "bodhisattvasya mārge 'bhiniveśasya nivāraṇe /",
  "SA14abhisamu:abhs_8.37_1": "bodhiprāptu jinakṣetraviśuddhau niyatiṃ prati //",
  "SA14abhisamu:abhs_8.38_0": "aprameye ca sattvarthe buddhasevādike guṇe /",
  "SA14abhisamu:abhs_8.38_1": "bodheraṅgeṣvanāśe ca karmaṇāṃ satyadarśane //",
  "SA14abhisamu:abhs_8.39_0": "viparyāsaprahāṇe ca tadavastukatānaye /",
  "SA14abhisamu:abhs_8.39_1": "vyavadāne sasaṃbhāre saṃskṛtāsaṃskṛte prati //",
  "SA14abhisamu:abhs_8.40_0": "vyatibhedāparijñāne virnāṇe ca niveśanam /",
  "SA14abhisamu:abhs_8.40_1": "dharmakāyasya karmedaṃ saptavimśatidhā matam //",
  "SA14abhisamu:9_0": "// abhisamayālaṅkāre prajñāpāramitopadeśaśāstre",
  "SA14abhisamu:9_1": "dharmakāyādhikāro 'ṣṭamaḥ //",
  "SA14abhisamu:10_0": "lakṣaṇaṃ tatprayogastatprakarṣastadanukramaḥ /",
  "SA14abhisamu:10_1": "tanniṣṭā tadvipākascotyanyaḥ ṣeḍhārthasaṃgrahaḥ // 1 //",
  "SA14abhisamu:10_2": "viṣayastritayo hetuḥ prayogaścaturātmakaḥ /",
  "SA14abhisamu:10_3": "dharmakāyaḥ phalaṃ karmetyanyastredhārthasaṃgrahaḥ // 2 //",
  "SA14abhisamu:10_4": "abhisamayālaṅkāraṃ nāma prajñāpāramitopadeśaśāstraṃ samāptam //",
  "SA14abhisamu:10_5": "kṛtirāryamaitreyanāthasya //"
}