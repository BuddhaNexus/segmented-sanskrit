{
  "XXmrtvts_u:0": "Mṛtyuvañcanatārāsādhana",
  "XXmrtvts_u:1": "// namaḥ sitatārāyai //",
  "XXmrtvts_u:2": "pūrvavac chūnyatāparyantaṃ vibhāvya",
  "XXmrtvts_u:3": "sitāravindamadhyasthāṃ tāṃbhūtāṃ candraviṣṭarām /",
  "XXmrtvts_u:4": "ābaddhavajraparyaṅkāṃ varadotpaladhāriṇīm // Mvts_1 //",
  "XXmrtvts_u:5": "śaraccandrakarākārāṃ pṛṣṭhacandrasamāśritām /",
  "XXmrtvts_u:6": "sarvālaṅkārasaṃpūrṇāṃ ṣoḍaśābdavapuḥkramām // Mvts_2 //",
  "XXmrtvts_u:7": "dhyātvāryatārāṃ hṛdaye tasyāś cakraṃ sitadyuti /",
  "XXmrtvts_u:8": "aṣṭakoṣṭhakam aṣṭābhir akṣaraiḥ paripūritam // Mvts_3 //",
  "XXmrtvts_u:9": "oṃhāvyañjanamadhyasthasādhyanāmādyanābhikam /",
  "XXmrtvts_u:10": "dhyāyād ekāgracittaḥ san ṣaṇ māsān dṛḍhaniścayaḥ // Mvts_4 //",
  "XXmrtvts_u:11": "japed akhinnacittaḥ san mantram enaṃ daśākṣaram //",
  "XXmrtvts_u:12": "tatrāiṣa mantraḥ oṃ tāre tuttāre ture svāhā // Mvts_5 //",
  "XXmrtvts_u:13": "mṛtyudoṣair na liptaḥ syāt tārāhṛccakrabhāvakaḥ /",
  "XXmrtvts_u:14": "lābhī ca sarvasiddhīnāṃ ṣaṇmāsāvadhi tatparaḥ // Mvts_6 //",
  "XXmrtvts_u:15": "// mṛtyuvañcanatārāsādhanam //"
}