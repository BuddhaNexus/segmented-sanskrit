{
    "SA11bsa014_u:0_0": "Śikṣāsamuccayakārikā (Śsk)",
    "SA11bsa014_u:ssk_1_0": "yadā mama pareṣāṃ ca bhayaṃ duḥkhaṃ ca na priyam /",
    "SA11bsa014_u:ssk_1_1": "tadātmanaḥ ko viśeṣo yattaṃ rakṣāmi netaram //",
    "SA11bsa014_u:ssk_2_0": "duḥkhāntaṃ kartukāmena sukhāntaṃ gantumicchatā /",
    "SA11bsa014_u:ssk_2_1": "śraddhāmūlaṃ dṛḍhīkṛtya bodhau kāryā matirdṛḍhā //",
    "SA11bsa014_u:ssk_3_0": "(śikṣādaro) mahāyānādbodhisattvasya saṃvaraḥ /",
    "SA11bsa014_u:ssk_3_1": "marmasthānānyato vidyādyenānāpattiko bhavet //",
    "SA11bsa014_u:ssk_4_0": "ātmabhāvasya bhogānāṃ tryadhvavṛtteḥ śubhasya ca /",
    "SA11bsa014_u:ssk_4_1": "utsargaḥ sarvasattvebhyastadrakṣā śuddhivardhanam //",
    "SA11bsa014_u:ssk_5_0": "paribhogāya sattvānāmātmabhāvādi dīyate /",
    "SA11bsa014_u:ssk_5_1": "arakṣite kuto bhogaḥ ki dattaṃ yanna bhujyate //",
    "SA11bsa014_u:ssk_6_0": "tasmātsattvopabhogārthamātmabhāvādi pālayet /",
    "SA11bsa014_u:ssk_6_1": "kalyāṇamitrānutsargāt sūtrāṇāṃ ca sadekṣaṇāt //",
    "SA11bsa014_u:ssk_7_0": "tatrātmabhāve kā rakṣā yadanarthavivarjanam /",
    "SA11bsa014_u:ssk_7_1": "kenaitallabhyate sarvaṃ niṣphalaspandavarjanāt //",
    "SA11bsa014_u:ssk_8_0": "etatsidhyetsadā smṛtyā smṛtistīvrādarādbhavet /",
    "SA11bsa014_u:ssk_8_1": "ādaraḥ śamamāhātmyaṃ jñātvātāpena jāyate //",
    "SA11bsa014_u:ssk_9_0": "samāhito yathābhūtaṃ prajānātītyavadanmuniḥ /",
    "SA11bsa014_u:ssk_9_1": "śamācca na caleccitaṃ bāhyaceṣṭā nivartanāt //",
    "SA11bsa014_u:ssk_10_0": "sarvatrāpacalo mandamatisnigdhābhibhāṣaṇāt /",
    "SA11bsa014_u:ssk_10_1": "āvavarjayejjanaṃ bhavyamādeyaścāpi jāyate //",
    "SA11bsa014_u:ssk_11_0": "anādeyaṃ tu taṃ lokaḥ paribhūya jināṅkuram /",
    "SA11bsa014_u:ssk_11_1": "bhasmacchanno yathā vahniḥ pacyeta narakādiṣu //",
    "SA11bsa014_u:ssk_12_0": "ratnameghe jinenoktastena saṅkṣepasaṃvaraḥ /",
    "SA11bsa014_u:ssk_12_1": "yenāprasādaḥ sattvānāṃ tadyatnena vivarjayet //",
    "SA11bsa014_u:ssk_13_0": "eṣā rakṣātmabhāvasya bhaiṣajyavasānādibhiḥ /",
    "SA11bsa014_u:ssk_13_1": "ātmatṛṣṇopabhogāttu kliṣṭāpattiḥ prajāyate //",
    "SA11bsa014_u:ssk_14_0": "sukṛṭārambhiṇā bhāvyaṃ mātrajñena ca sarvataḥ /",
    "SA11bsa014_u:ssk_14_1": "iti śikṣāpadādasya bhogarakṣā na duṣkarā //",
    "SA11bsa014_u:ssk_15_0": "svārthavipāka vaitṛṣṇyācchubhaṃ saṃrakṣitaṃ bhavet /",
    "SA11bsa014_u:ssk_15_1": "paścātāpaṃ na kurvīta na ca kṛtvā prakāśayet //",
    "SA11bsa014_u:ssk_16_0": "lābhasatkārabhītaḥ syādunnatiṃ varjayetsadā /",
    "SA11bsa014_u:ssk_16_1": "bodhisattvaḥ prasannaḥ syāddharme vimatimutsṛjet //",
    "SA11bsa014_u:ssk_17_0": "śodhitasyātmabhāvasyabhogaḥ pathyo bhaviṣyati /",
    "SA11bsa014_u:ssk_17_1": "samyaksiddhasya bhaktasya niṣkaṇasyeva dehinām //",
    "SA11bsa014_u:ssk_18_0": "tṛṇacchanna yathā śasyaṃ rogaiḥ sīdati naidhate /",
    "SA11bsa014_u:ssk_18_1": "buddhāṅkurastathā vṛddhiṃ kleśacchanno na gacchati //",
    "SA11bsa014_u:ssk_19_0": "ātmabhāvasya kā śuddhiḥ pāpakleśaviśodhanam /",
    "SA11bsa014_u:ssk_19_1": "sambuddhottayarthasāreṇa yatnabhāve tvapāyagaḥ //",
    "SA11bsa014_u:ssk_20_0": "kṣameta śrutameṣeta saṃśrayeta vanaṃ tataḥ /",
    "SA11bsa014_u:ssk_20_1": "sāmādhānāya yujyeta bhāvayedaśubhādikam //",
    "SA11bsa014_u:ssk_21_0": "bhogaśuddhiṃ ca jānīyātsamyagājīvaśodhanāt /",
    "SA11bsa014_u:ssk_21_1": "śūnyatākaruṇāgarbheceṣṭitātpuṇyaśodhanam //",
    "SA11bsa014_u:ssk_22_0": "grahītāraḥ subahavaḥ svalpaṃ ceda manena kim /",
    "SA11bsa014_u:ssk_22_1": "na cātitṛptijanakaṃ vardhanīyamidaṃ tataḥ //",
    "SA11bsa014_u:ssk_23_0": "ātmabhāvasya kā vṛddhirbalānālasyavardhanam /",
    "SA11bsa014_u:ssk_23_1": "śūnyatākaruṇāgarbhāddānādbhogasya vardhanam //",
    "SA11bsa014_u:ssk_24_0": "kṛtvādāveva yatnena vyavasāyāśayau dṛḍhau /",
    "SA11bsa014_u:ssk_24_1": "karuṇāṃ ca puraskṛtya yateta śubhavṛddhaye //",
    "SA11bsa014_u:ssk_25_0": "bhadracaryāvidhiḥ kāryo vandanādiḥ sahādarāt /",
    "SA11bsa014_u:ssk_25_1": "śraddhādīnāṃ sadābhyāso maitrī buddhādyanusmṛtiḥ //",
    "SA11bsa014_u:ssk_26_0": "sarvāvasthāsu sattvārtho dharmadānaṃ nirāmiṣam /",
    "SA11bsa014_u:ssk_26_1": "bodhicittaṃ ca puṇyasya vṛddhihetuḥ samāsataḥ //",
    "SA11bsa014_u:ssk_27_0": "siddhiḥ samyakprahāṇānāmapramādāviyojanāt /",
    "SA11bsa014_u:ssk_27_1": "smṛtyātha samprajanyena yoniśaścintanena ca //"
}