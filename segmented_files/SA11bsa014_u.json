{
  "SA11bsa014_u:0": "Śikṣāsamuccayakārikā (Śsk)",
  "SA11bsa014_u:1": "yadā mama pareṣāṃ ca bhayaṃ duḥkhaṃ ca na priyam /",
  "SA11bsa014_u:2": "tadātmanaḥ ko viśeṣo yattaṃ rakṣāmi netaram // Śsk_1 //",
  "SA11bsa014_u:3": "duḥkhāntaṃ kartukāmena sukhāntaṃ gantumicchatā /",
  "SA11bsa014_u:4": "śraddhāmūlaṃ dṛḍhīkṛtya bodhau kāryā matirdṛḍhā // Śsk_2 //",
  "SA11bsa014_u:5": "(śikṣādaro) mahāyānādbodhisattvasya saṃvaraḥ /",
  "SA11bsa014_u:6": "marmasthānānyato vidyādyenānāpattiko bhavet // Śsk_3 //",
  "SA11bsa014_u:7": "ātmabhāvasya bhogānāṃ tryadhvavṛtteḥ śubhasya ca /",
  "SA11bsa014_u:8": "utsargaḥ sarvasattvebhyastadrakṣā śuddhivardhanam // Śsk_4 //",
  "SA11bsa014_u:9": "paribhogāya sattvānāmātmabhāvādi dīyate /",
  "SA11bsa014_u:10": "arakṣite kuto bhogaḥ ki dattaṃ yanna bhujyate // Śsk_5 //",
  "SA11bsa014_u:11": "tasmātsattvopabhogārthamātmabhāvādi pālayet /",
  "SA11bsa014_u:12": "kalyāṇamitrānutsargāt sūtrāṇāṃ ca sadekṣaṇāt // Śsk_6 //",
  "SA11bsa014_u:13": "tatrātmabhāve kā rakṣā yadanarthavivarjanam /",
  "SA11bsa014_u:14": "kenaitallabhyate sarvaṃ niṣphalaspandavarjanāt // Śsk_7 //",
  "SA11bsa014_u:15": "etatsidhyetsadā smṛtyā smṛtistīvrādarādbhavet /",
  "SA11bsa014_u:16": "ādaraḥ śamamāhātmyaṃ jñātvātāpena jāyate // Śsk_8 //",
  "SA11bsa014_u:17": "samāhito yathābhūtaṃ prajānātītyavadanmuniḥ /",
  "SA11bsa014_u:18": "śamācca na caleccitaṃ bāhyaceṣṭā nivartanāt // Śsk_9 //",
  "SA11bsa014_u:19": "sarvatrāpacalo mandamatisnigdhābhibhāṣaṇāt /",
  "SA11bsa014_u:20": "āvavarjayejjanaṃ bhavyamādeyaścāpi jāyate // Śsk_10 //",
  "SA11bsa014_u:21": "anādeyaṃ tu taṃ lokaḥ paribhūya jināṅkuram /",
  "SA11bsa014_u:22": "bhasmacchanno yathā vahniḥ pacyeta narakādiṣu // Śsk_11 //",
  "SA11bsa014_u:23": "ratnameghe jinenoktastena saṅkṣepasaṃvaraḥ /",
  "SA11bsa014_u:24": "yenāprasādaḥ sattvānāṃ tadyatnena vivarjayet // Śsk_12 //",
  "SA11bsa014_u:25": "eṣā rakṣātmabhāvasya bhaiṣajyavasānādibhiḥ /",
  "SA11bsa014_u:26": "ātmatṛṣṇopabhogāttu kliṣṭāpattiḥ prajāyate // Śsk_13 //",
  "SA11bsa014_u:27": "sukṛṭārambhiṇā bhāvyaṃ mātrajñena ca sarvataḥ /",
  "SA11bsa014_u:28": "iti śikṣāpadādasya bhogarakṣā na duṣkarā // Śsk_14 //",
  "SA11bsa014_u:29": "svārthavipāka vaitṛṣṇyācchubhaṃ saṃrakṣitaṃ bhavet /",
  "SA11bsa014_u:30": "paścātāpaṃ na kurvīta na ca kṛtvā prakāśayet // Śsk_15 //",
  "SA11bsa014_u:31": "lābhasatkārabhītaḥ syādunnatiṃ varjayetsadā /",
  "SA11bsa014_u:32": "bodhisattvaḥ prasannaḥ syāddharme vimatimutsṛjet // Śsk_16 //",
  "SA11bsa014_u:33": "śodhitasyātmabhāvasyabhogaḥ pathyo bhaviṣyati /",
  "SA11bsa014_u:34": "samyaksiddhasya bhaktasya niṣkaṇasyeva dehinām // Śsk_17 //",
  "SA11bsa014_u:35": "tṛṇacchanna yathā śasyaṃ rogaiḥ sīdati naidhate /",
  "SA11bsa014_u:36": "buddhāṅkurastathā vṛddhiṃ kleśacchanno na gacchati // Śsk_18 //",
  "SA11bsa014_u:37": "ātmabhāvasya kā śuddhiḥ pāpakleśaviśodhanam /",
  "SA11bsa014_u:38": "sambuddhottayarthasāreṇa yatnabhāve tvapāyagaḥ // Śsk_19 //",
  "SA11bsa014_u:39": "kṣameta śrutameṣeta saṃśrayeta vanaṃ tataḥ /",
  "SA11bsa014_u:40": "sāmādhānāya yujyeta bhāvayedaśubhādikam // Śsk_20 //",
  "SA11bsa014_u:41": "bhogaśuddhiṃ ca jānīyātsamyagājīvaśodhanāt /",
  "SA11bsa014_u:42": "śūnyatākaruṇāgarbheceṣṭitātpuṇyaśodhanam // Śsk_21 //",
  "SA11bsa014_u:43": "grahītāraḥ subahavaḥ svalpaṃ ceda manena kim /",
  "SA11bsa014_u:44": "na cātitṛptijanakaṃ vardhanīyamidaṃ tataḥ // Śsk_22 //",
  "SA11bsa014_u:45": "ātmabhāvasya kā vṛddhirbalānālasyavardhanam /",
  "SA11bsa014_u:46": "śūnyatākaruṇāgarbhāddānādbhogasya vardhanam // Śsk_23 //",
  "SA11bsa014_u:47": "kṛtvādāveva yatnena vyavasāyāśayau dṛḍhau /",
  "SA11bsa014_u:48": "karuṇāṃ ca puraskṛtya yateta śubhavṛddhaye // Śsk_24 //",
  "SA11bsa014_u:49": "bhadracaryāvidhiḥ kāryo vandanādiḥ sahādarāt /",
  "SA11bsa014_u:50": "śraddhādīnāṃ sadābhyāso maitrī buddhādyanusmṛtiḥ // Śsk_25 //",
  "SA11bsa014_u:51": "sarvāvasthāsu sattvārtho dharmadānaṃ nirāmiṣam /",
  "SA11bsa014_u:52": "bodhicittaṃ ca puṇyasya vṛddhihetuḥ samāsataḥ // Śsk_26 //",
  "SA11bsa014_u:53": "siddhiḥ samyakprahāṇānāmapramādāviyojanāt /",
  "SA11bsa014_u:54": "smṛtyātha samprajanyena yoniśaścintanena ca // Śsk_27 //"
}