{
    "T01n832u_001:0": " daśabhūmīśvaro nāma mahāyānasūtraratnarājastotram",
    "T01n832u_001:1": " śamadamaniratānāṃ śāntadāntāśayānāṃ",
    "T01n832u_001:2": " khagapathasadṛśānāmantarīkṣasamānām |",
    "T01n832u_001:3": " khilamalavidhutanāṃ mārgajñānasthitānāṃ",
    "T01n832u_001:4": " śṛṇuta varaviśeṣaṃ bodhisattvāṃśca śreṣṭhān || 1 ||",
    "T01n832u_001:5": " kuśalasatasahasraṃ saṃcitaṃ kalpakoṭayā",
    "T01n832u_001:6": " subuddhaśatasahasraṃ pūjayitvā gṛhītam |",
    "T01n832u_001:7": " pratyekajinavarānvai pūjayitvā tvanantān",
    "T01n832u_001:8": " sakalajagahitāya jāyate bodhicittam || 2 ||",
    "T01n832u_001:9": " uta tapatapitānāṃ kṣāntipāraṃgatānāṃ",
    "T01n832u_001:10": " hṛtaśritacaritānāṃ puṇyajñānodgatānām |",
    "T01n832u_001:11": " vipulagatimatīnāṃ puṇyajñānāśayānāṃ",
    "T01n832u_001:12": " daśabalasamatulyaṃ jāyate bodhicittam || 3 ||",
    "T01n832u_001:13": " pramuditasumatīnāṃ dānadharme ratānāṃ",
    "T01n832u_001:14": " sakalajagahitārthaṃ nityamevodyatānām |",
    "T01n832u_001:15": " jinaguṇaniratānāṃ sattvarakṣāvratānāṃ",
    "T01n832u_001:16": " tribhuvanahitakartṛ jāyate bodhicittam || 4 ||",
    "T01n832u_001:17": " akuśalaviratānāṃ śuddhamārge sthitānāṃ",
    "T01n832u_001:18": " vrataniyamaratānāṃ śāntasaumyendriyāṇām |",
    "T01n832u_001:19": " jinaśaraṇagatānāṃ bodhicaryāśayānāṃ",
    "T01n832u_001:20": " tribhuvanahitasādhyaṃ jāyate bodhicittam || 5 ||",
    "T01n832u_001:21": " anugatakuśalānāṃ kṣāntisvārasyabhājāṃ",
    "T01n832u_001:22": " viditaguṇarasānāṃ tyaktamānotsavānām |",
    "T01n832u_001:23": " nihitaśubhamatīnāṃ dānasaumyāśayānāṃ",
    "T01n832u_001:24": " sakalahitavidhānaṃ jāyate bodhicittam || 6 ||",
    "T01n832u_001:25": " pracalati śubhakārye dhīravīryāḥ sahāyā",
    "T01n832u_001:26": " nikhilajanahitārthaṃ prodyate mānasiṃhaḥ |",
    "T01n832u_001:27": " avirataguṇasādhyā nirjitakleśasaṃdhā",
    "T01n832u_001:28": " jhaṭiti manasi teṣāṃ jāyate bodhicittam || 7 ||",
    "T01n832u_001:29": " susamavahitacittā dhvastamohāndhakārā",
    "T01n832u_001:30": " vigalitamadamānā tyaktasaṃkliṣṭamārgāḥ |",
    "T01n832u_001:31": " samasukhaniratā ye tyaktasaṃsārasaṃgā",
    "T01n832u_001:32": " jhaṭiti manasi teṣāṃ jāyate bodhicittam || 8 ||",
    "T01n832u_001:33": " vimalakhasamacittā jñānavijñānavijñā",
    "T01n832u_001:34": " nihatanamucimārā vāntakleśābhimānāḥ |",
    "T01n832u_001:35": " jinapadaśaraṇasthā labdhatattvārthakāye",
    "T01n832u_001:36": " sapadi manasi teṣāṃ jāyate bodhicittam || 9 ||",
    "T01n832u_001:37": " tribhuvanaśivasādhyopāyavijñānadhīrāḥ",
    "T01n832u_001:38": " karibalaparihāropāyavidṛddhimantaḥ |",
    "T01n832u_001:39": " sugataguṇasamīhā ye ca puṇyānurāgā",
    "T01n832u_001:40": " sapadi manasi teṣāṃ jāyate bodhicittam || 10 ||",
    "T01n832u_001:41": " tribhuvanahitakāmā bodhisaṃbhārapūrtyai",
    "T01n832u_001:42": " praṇihitamanasā ye duṣkare'pi caranti |",
    "T01n832u_001:43": " avirataśubhakarma prodyatāṃ bodhisattvāḥ",
    "T01n832u_001:44": " sapadi manasi teṣāṃ jāyate bodhicittam || 11 ||",
    "T01n832u_001:45": " daśabalaguṇakāmā bodhicaryānuraktā",
    "T01n832u_001:46": " vijitakaribalaughāstyaktamānānuṣaṅgāḥ |",
    "T01n832u_001:47": " anugataśubhamārgā labdhadharmārthakāmā",
    "T01n832u_001:48": " jhaṭiti manasi teṣāṃ jāyate bodhicittam || 12 ||",
    "T01n832u_001:49": " iti gaṇitaguṇāṃśā bodhicaryāścarantu",
    "T01n832u_001:50": " jinapadapraṇidhānā satsamṛddhiṃ labhantu |",
    "T01n832u_001:51": " tribhuvanapariśuddhā bodhicittaṃ labhantu",
    "T01n832u_001:52": " triśaraṇapariśuddhā bodhisattvā bhavantu || 13 ||",
    "T01n832u_001:53": " daśapāramitāḥ pūrya daśabhūmīśvaro bhavet |",
    "T01n832u_001:54": " bhūyo'pi kathyate hyetacchṛṇutaivaṃ samāsataḥ || 14 ||",
    "T01n832u_001:55": " bodhicittaṃ yadāsādya saṃpradānaṃ karoti yaḥ |",
    "T01n832u_001:56": " tadā pramuditāṃ prāpto jambūdvīpeśvaro bhavet || 15 ||",
    "T01n832u_001:57": " tatrasthaḥ pālayet sattvān yathecchapratipādanaiḥ |",
    "T01n832u_001:58": " svayaṃ dāne pratiṣṭhitvā parāṃścāpi niyojayet || 16 ||",
    "T01n832u_001:59": " sarvān bodhau pratiṣṭhāpya saṃpūrṇadānapāragaḥ |",
    "T01n832u_001:60": " etatkarmānubhāvena saṃvaraṃ samupācaret || 17 ||",
    "T01n832u_001:61": " sampacchīlaṃ samādhāya saṃvaraṃ kuśalī bhavet |",
    "T01n832u_001:62": " tataḥ sa vimalāṃ prāptaścāturdvīpeśvaro bhavet || 18 ||",
    "T01n832u_001:63": " tatrasthaḥ pālayet sattvānakuśalaṃ nivārayet |",
    "T01n832u_001:64": " svayaṃ śīle pratiṣṭhitvā parāṃścāpi niyojayet || 19 ||",
    "T01n832u_001:65": " sarvān bodhau pratiṣṭhāpya sampūrṇakuśalī bhavet |",
    "T01n832u_001:66": " etaddharmavipākena kṣāntivratamupāśrayet || 20 ||",
    "T01n832u_001:67": " samyak kṣāntivrataṃ dhṛtvā kṣāntibhṛt kuśalī bhavet |",
    "T01n832u_001:68": " tataḥ prābhākarīṃ prāptastrayastriṃśādhipo bhavet || 21 ||",
    "T01n832u_001:69": " tatrasthaḥ pālayet satvān kleśamārganivāraṇaiḥ |",
    "T01n832u_001:70": " svayaṃ kṣāntivrate sthitvā parāṃścāpi niyojayet || 22 ||",
    "T01n832u_001:71": " sattvān bodhau pratiṣṭhāpya śāntipāraṃgato bhavet |",
    "T01n832u_001:72": " etatpuṇyavipākena vīryabalamupāśrayet || 23 ||",
    "T01n832u_001:73": " samyag vīryaṃ samādhāya vīryabhṛtkuśalī bhavet |",
    "T01n832u_001:74": " tataścārciṣmatīṃ prāpya sudhāmādhipatirbhavet || 24 ||",
    "T01n832u_001:75": " tatrasthaḥ pālayan sarvān kudṛṣṭīḥ saṃnivārayet |",
    "T01n832u_001:76": " samyagdṛṣṭau pratiṣṭhāya bodhayitvā prayatnataḥ || 25 ||",
    "T01n832u_001:77": " svayaṃ dhyānavrate sthitvā parāṃścāpi niyojayet |",
    "T01n832u_001:78": " sarvān bodhau pratiṣṭhāpya dhyānapāraṃgato bhavet || 26 ||",
    "T01n832u_001:79": " etatpuṇyavipākena dhyānapāraṃ samārabhet |",
    "T01n832u_001:80": " sarvakleśān vinirjitya samādhisusthito bhavet || 27 ||",
    "T01n832u_001:81": " samyagdhyānaṃ samādhāya samādhikuśalī bhavet |",
    "T01n832u_001:82": " tataḥ sudurjayāṃ prāptaḥ sa tuṣitādhipo bhavet || 28 ||",
    "T01n832u_001:83": " tatrasthaḥ pālayetsattvāṃstīrthyamārganivāraṇaiḥ |",
    "T01n832u_001:84": " sattvadharmaṃ pratiṣṭhāpya bodhayitvā prayatnataḥ || 29 ||",
    "T01n832u_001:85": " svayaṃ dhyānavrate sthitvā parāṃścāpi niyojayet |",
    "T01n832u_001:86": " sarvān bodhau pratiṣṭhāpya dhyānapāraṃgato bhavet || 30 ||",
    "T01n832u_001:87": " etatpuṇyavipākena prajñāvratamupāśrayet |",
    "T01n832u_001:88": " sarvānmārān vinirjitya prajñābhijñāsamṛddhimān || 31 ||",
    "T01n832u_001:89": " samyak prajñāṃ samādhāya svābhijñākuśalī bhavet |",
    "T01n832u_001:90": " tataścābhimukhīṃ prāptaḥ sunirmitādhipo bhavet || 32 ||",
    "T01n832u_001:91": " tatrasthaḥ pālayet sattvānabhimānanivāraṇaiḥ |",
    "T01n832u_001:92": " śūnyatāṃ supratiṣṭhāpya bodhayitvā prayatnataḥ || 33 ||",
    "T01n832u_001:93": " svayaṃ prajñāvrate sthitvā parāṃścāpi niyojayet |",
    "T01n832u_001:94": " sarvān bodhau pratiṣṭhāpya prajñāpāraṃgato bhavet || 34 ||",
    "T01n832u_001:95": " etatpuṇyavipākaiśca samupāyavrataṃ caret |",
    "T01n832u_001:96": " sarvaduṣṭān vinirjitya saddharmakuśalī sudhīḥ || 35 ||",
    "T01n832u_001:97": " samupāyavidhānena sattvān bodhau niyojayet |",
    "T01n832u_001:98": " tato dūraṅgamāṃ prāpto vaśavartīśvaro bhavet || 36 ||",
    "T01n832u_001:99": " tatrasthaḥ pālayetsattvānabhisamayabodhanaiḥ |",
    "T01n832u_001:100": " bodhisattvaniyāmeṣu pratiṣṭhāya prabodhayet || 37 ||",
    "T01n832u_001:101": " tatropāye svayaṃ sthitvā parāṃścāpi niyojayet |",
    "T01n832u_001:102": " sarvān bodhau pratiṣṭhāpya upāyapārago bhavet || 38 ||",
    "T01n832u_001:103": " etatpuṇyānubhāvaśca supraṇidhīnupāśrayet |",
    "T01n832u_001:104": " mithyādṛṣṭiṃ vinirjitya samyagdṛṣṭiḥ kṛto budhaiḥ || 39 ||",
    "T01n832u_001:105": " supratiṣṭhitacittena samyagbodhau pratiṣṭhitaḥ |",
    "T01n832u_001:106": " tataścāpyacalāṃ prāpto buddhayā sāhasrikādhipaḥ || 40 ||",
    "T01n832u_001:107": " tatrasthaḥ pālayetsattvān tripānaṃ saṃpibet śanaiḥ |",
    "T01n832u_001:108": " lokadhātau parijñāne pratiṣṭhāpya prabodhayet || 41 ||",
    "T01n832u_001:109": " supraṇidhau svayaṃ sthitvā parāṃścāpi niyojayen |",
    "T01n832u_001:110": " sarvān bodhau pratiṣṭhāpya prāṇiṣu pārago bhavet || 42 ||",
    "T01n832u_001:111": " etatpuṇyānusāraiśca balavratamupāśrayet |",
    "T01n832u_001:112": " sarvaduṣṭān vinirjitya sambodhikṛtaniścayaḥ || 43 ||",
    "T01n832u_001:113": " samyagyatnasamutsāhaiḥ sarvatīrthyān vinirjayet |",
    "T01n832u_001:114": " tataḥ sādhumatīṃ prāpto mahābrahmā bhavet kṛtī || 44 ||",
    "T01n832u_001:115": " tatrasthaḥ pālayan sattvān buddhayānopadeśanaiḥ |",
    "T01n832u_001:116": " sattvāsamaparijñāne samyagbodhau prabodhayet || 45 ||",
    "T01n832u_001:117": " svayaṃ bale pratiṣṭhitvā parāṃścāpi niyojayet |",
    "T01n832u_001:118": " sarvān bodhau pratiṣṭhāpya balapāraṃgato bhavet || 46 ||",
    "T01n832u_001:119": " etatpuṇyavipākaiśca jñānavratamupāśrayet |",
    "T01n832u_001:120": " caturmārān vinirjitya bodhisattvaguṇākaraḥ || 47 ||",
    "T01n832u_001:121": " samyagjñānaṃ samādhāya saddharmakuśalo bhavet |",
    "T01n832u_001:122": " dharmameghāṃ tataḥ prāpto maheśvaro bhavet kṛtī || 48 ||",
    "T01n832u_001:123": " tatrasthaḥ pālayan sarvān sarvākārānubodhanaiḥ |",
    "T01n832u_001:124": " sarvākāravare jñāne pratiṣṭhāpya prabodhayet || 49 ||",
    "T01n832u_001:125": " svayaṃ jñāne pratiṣṭhitvā parāṃścāpi niyojayet |",
    "T01n832u_001:126": " sarvān bodhau pratiṣṭhāpya jñānapāraṃgato bhavet || 50 ||",
    "T01n832u_001:127": " etatpuṇyānubhāvaiśca daśabhūmīśvaro jinaḥ |",
    "T01n832u_001:128": " sarvākāraguṇādhāraḥ sarvajño dharmalābhavit || 51 ||",
    "T01n832u_001:129": " iti matvā bhuvabhiśca sambuddhapadalabdhaye |",
    "T01n832u_001:130": " daśapāramitārūpe caritavyaṃ samāhitaiḥ || 52 ||",
    "T01n832u_001:131": " tathā bodhiṃ śivāṃ prāpya caturmārān vinirjayet |",
    "T01n832u_001:132": " sarvān bodhau pratiṣṭhāpya nirvṛtiṃ samavāpsyatha || 53 ||",
    "T01n832u_001:133": " etajjñātvā paricchāyāṃ caradhvaṃ bodhiśāsane |",
    "T01n832u_001:134": " nirvidhnaṃ bodhimāsādya labhadhvaṃ saugataṃ padam || 54 ||",
    "T01n832u_001:135": " etāstā khalvāha jinaputro daśabodhisattvabhūmayaḥ samāsato nirdiṣṭāḥ sarvākāravaropetāḥ sarvajñānānugatā draṣṭavyāḥ |",
    "T01n832u_001:136": " tasyāṃ velāyāmayaṃ trisāhasralokadhātuṣaḍvikāraṃ prākampata vividhāni ca puṇyāni viyatto nyapatan |",
    "T01n832u_001:137": " divyamānuṣakāṇi ca bhūtāni saṃpravāditānyabhūvan,",
    "T01n832u_001:138": " anumodanāṃśagena ca yāvadakaniṣṭhabhuvanaṃ vijñaptamabhūt ||",
    "T01n832u_001:139": " śrībodhisattvacaryāprasthānād daśabhūmīśvaro nāma",
    "T01n832u_001:140": " mahāyānasūtraratnarājastotraṃ samāptam |"
}