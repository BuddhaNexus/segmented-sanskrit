{
  "SA15bsa057_u:0": "Dharmakīrti: Nyāyabindu Prakaraṇakārikā",
  "SA15bsa057_u:1": "Sūtrapāṭhaḥ",
  "SA15bsa057_u:2": "1 prathamaḥ pratyakṣaparicchedaḥ",
  "SA15bsa057_u:3": "1/1 samyagjñānapūrvikā sarvapuruṣārthasiddhiriti tadvayutpādayate /",
  "SA15bsa057_u:4": "1/2 dvividhaṃ samyagjñānam /",
  "SA15bsa057_u:5": "1/3 pratyakṣam, anumānaṃ ceti /",
  "SA15bsa057_u:6": "1/4 tatra pratyakṣaṃ kalpanāpoḍhamabhrāntam /",
  "SA15bsa057_u:7": "1/5 abhilāpasaṃsargayogyapratibhāsapratītiḥ kalpanā",
  "SA15bsa057_u:8": "1/6 tayā rahitaṃ timirāśubhramaṇanauyānasambhramādyanāhitavibhramaṃ jñānaṃ pratyakṣam /",
  "SA15bsa057_u:9": "1/7 taccaturvidham /",
  "SA15bsa057_u:10": "1/8 indriyajñānam / (1)",
  "SA15bsa057_u:11": "1/",
  "SA15bsa057_u:12": "9 svaviṣayānantaraviṣayasahakāriṇendriyajñānena samanantarapratyayena janitaṃ tanmanovijñānam / (2)",
  "SA15bsa057_u:13": "1/10 sarvacittacaittānāmātmasaṃvedanam / (3)",
  "SA15bsa057_u:14": "1/11 bhūtārthabhāvanāprakarṣaparyantajaṃ yogijñānaṃ ceti / (4)",
  "SA15bsa057_u:15": "1/12 tasya viṣayaḥ svalakṣaṇam /",
  "SA15bsa057_u:16": "1/13 yasyārthasya sannidhānāsannidhānābhyāṃ jñānapratibhāsabhedastatsvalakṣaṇam /",
  "SA15bsa057_u:17": "1/14 tadeva paramārthasat /",
  "SA15bsa057_u:18": "1/15 arthakriyāsāmarthyalakṣaṇatvād vastunaḥ /",
  "SA15bsa057_u:19": "1/16 anyat sāmānyalakṣaṇam",
  "SA15bsa057_u:20": "1/17 so 'numānasya viṣayaḥ /",
  "SA15bsa057_u:21": "1/18 atdeva ca pratyakṣaṃ jñānaṃ pramāṇaphalam /",
  "SA15bsa057_u:22": "1/19 arthapratītirūpatvāt /",
  "SA15bsa057_u:23": "1/20 arthasārūpyamasya pramāṇam /",
  "SA15bsa057_u:24": "1/21 tadvaśādarthapratītisiddhareti /",
  "SA15bsa057_u:25": "iti prathamaḥ pratyakṣaparicchedaḥ //",
  "SA15bsa057_u:26": "______________________________________________________________",
  "SA15bsa057_u:27": "dvitīyaḥ svārthānumānaparicchedaḥ",
  "SA15bsa057_u:28": "2/1 anumānaṃ dvidhā /",
  "SA15bsa057_u:29": "2/2 svārtha parārtha ca /",
  "SA15bsa057_u:30": "2/3 tatra svārtha trirūpālliṅgād yadanumeye jñānaṃ tadanumānam /",
  "SA15bsa057_u:31": "2/4 pramāṇalakṣaṇavyavasthātrāpi pūrvavat /",
  "SA15bsa057_u:32": "2/",
  "SA15bsa057_u:33": "5 trairūpyaṃ punarliṅgasyānumeye sattvameva, sapakṣa eva sattvam, asapakṣe cāsattvameva niścitam /",
  "SA15bsa057_u:34": "2/6 anumeyo 'tra jijñāsitaviśeṣo dharmī /",
  "SA15bsa057_u:35": "2/7 sādhyadharmasāmānyena samāno 'rthaḥ sapakṣa /",
  "SA15bsa057_u:36": "2/8 na sapakṣo 'sapakṣaḥ /",
  "SA15bsa057_u:37": "2/9 tato 'nyastadviruddhastadabhāvaśceti",
  "SA15bsa057_u:38": "2/10 trirūpāṇi ca trīṇyeva liṅgāni /",
  "SA15bsa057_u:39": "2/11 anupalabdhiḥ svabhāvaḥ kārya ceti /",
  "SA15bsa057_u:40": "2/12 tatrānupalabdhiryathā- na pradeśaviśeṣe kvacid ghaṭaḥ, upalabdhikṣaṇaprāptasyānupalabdheriti /",
  "SA15bsa057_u:41": "2/13 upalabdhilakṣaṇaprāptirūpalambhapratyayāntarasākalyaṃ svabhāvaviśeṣaśca /",
  "SA15bsa057_u:42": "2/14 yaḥ svabhāvaḥ satsvanyeṣūṣalambhapratyayeṣu san pratyakṣa eva bhavati, sa svabhāvaviśeṣaḥ /",
  "SA15bsa057_u:43": "2/15 svabhāvaḥ svasattāmātraprabhāvini sādhyadharme hetuḥ /",
  "SA15bsa057_u:44": "2/16 yathā- vṛkṣo 'yaṃ śiśapātvāditi /",
  "SA15bsa057_u:45": "2/17 kārya yathā- bahniratra dhūmāditi /",
  "SA15bsa057_u:46": "2/18 atra dvau vastusādhanau / ekaḥ pratiṣedhahetuḥ /",
  "SA15bsa057_u:47": "2/19 svabhāvapratibandhe hi satyartho 'rtha gamayet /",
  "SA15bsa057_u:48": "2/20 tadapratibaddhasya tadavyabhicāraniyamābhāvāt /",
  "SA15bsa057_u:49": "2/21 sa ca pratibandhaḥ sādhye 'rthe liṅgasya /",
  "SA15bsa057_u:50": "2/22 vastutastādātmyāt tadutpatteśca /",
  "SA15bsa057_u:51": "2/23 atatsvabhāvasyātadutpatteśca tatrāpratibaddhasvabhāvatvāt /",
  "SA15bsa057_u:52": "2/24 te ca tādātmyatadutpattī svabhāvakāryayoreveti tābhyāmeva vastusiddhiḥ /",
  "SA15bsa057_u:53": "2/25 pratiṣedhasiddhirapi yathoktāyā evānupalabdheḥ /",
  "SA15bsa057_u:54": "2/26 sati vastuni tasyā asambhavāt /",
  "SA15bsa057_u:55": "2/",
  "SA15bsa057_u:56": "27 anyathā cānupalabdhilakṣaṇaprāpteṣu deśakālasvabhāvaviprakṛṣṭeṣvartheṣvātmapratyakṣanivṛtterabhavaniścayābhāvāt /",
  "SA15bsa057_u:57": "2/",
  "SA15bsa057_u:58": "28 amūḍhasmṛtisaṃskārasyātītasya vartamānasya ca pratipattṛpratyakṣasya nivṛttirabhāvavyavahāraprasādhanī /",
  "SA15bsa057_u:59": "2/29 tasyā evābhāvaniścayāt /",
  "SA15bsa057_u:60": "2/30 sā ca prayogabhedādekādaśaprakārā /",
  "SA15bsa057_u:61": "2/31 svabhāvānupalabdhiryathā- nātra dhūma upalabdhilakṣaṇaprāptasyānupalabdheriti / (1)",
  "SA15bsa057_u:62": "2/32 kāryānupalabdhiryathā- nātrāpratibaddhasāmarthyāni dhūmakāraṇāni santi, dhūmābhāvāditi / (2)",
  "SA15bsa057_u:63": "2/33 vyāpakānupalabdhiryathā- nātra śiśapā, vṛkṣābhāvāditi / (3)",
  "SA15bsa057_u:64": "2/34 svabhāvaviruddhopalabdhiryathā- nātra śītasparśo vahneriti / (4)",
  "SA15bsa057_u:65": "2/35 viruddhakāryopalabdhiryathā- nātra śītasparśo dhūmāditi / (5)",
  "SA15bsa057_u:66": "2/",
  "SA15bsa057_u:67": "36 viruddhavyāptopalabdhiryathā- na dhruvabhāvī bhūtasyāpi bhāvasya vināśaḥ,",
  "SA15bsa057_u:68": "hetvantarāpekṣaṇāditi / (6)",
  "SA15bsa057_u:69": "2/37 kāryaviruddhopalabdhiryathā- nehāpratilbaddhasāmarthyāni śītakāraṇāni santi, vahneriti / (7)",
  "SA15bsa057_u:70": "2/38 vyāpakaviruddhopalabdhiryathā- nātra tuṣāraspaśo vahneriti / (8)",
  "SA15bsa057_u:71": "2/39 kāraṇānupalabdhiryathā- nātra dhūmo vahnyabhāvāditi / (9)",
  "SA15bsa057_u:72": "2/40 kāraṇaviruddhopalabdhiryathā- nāsya romaharṣādiviśeṣāḥ, sannihitadahanaviśeṣatvāditi / (10)",
  "SA15bsa057_u:73": "2/",
  "SA15bsa057_u:74": "41 kāraṇaviruddhakāyapilabdhiryathā- na romaharṣādiviśeṣayuktapuruṣāvānayaṃ pradeśaḥ, dhūmāditi / (11)",
  "SA15bsa057_u:75": "2/42 ime sarve kāryānupalabdhyādayo daśānupalabdhiprayogāḥ svabhāvānupalabdhau saṃgrahamupayānti /",
  "SA15bsa057_u:76": "2/43 pāramparyeṇārthāntaravidhipratiṣedhābhyāṃ prayogabhede 'pi /",
  "SA15bsa057_u:77": "2/",
  "SA15bsa057_u:78": "44 prayogadarśanābhyāsāt svayamapyevaṃ vyavacchedapratītirbhavati svārthe 'pyanumāne 'syāḥ prayoganirdeśaḥ /",
  "SA15bsa057_u:79": "2/",
  "SA15bsa057_u:80_0": "45 sarvatra cāsyāmabhāvavyavahārasādhanyāmanupalabdhau yeṣāṃ svabhāvaviruddhadīnāmupalabdhyā",
  "SA15bsa057_u:80_1": "kāraṇādīnāmanupalabdhyā ca pratiṣedha uktasteṣāmupalabdhilakṣaṇaprāptānāmevipalabdhiśca veditavyā /",
  "SA15bsa057_u:81": "2/46 anyeṣāṃ virodhakāryakāraṇabhāvāsiddheḥ /",
  "SA15bsa057_u:82": "2/47 viprakṛṣṭaviṣayā punaranupalabdhiḥ pratyakṣānumānanivṛttilakṣaṇā saṃśayahetuḥ /",
  "SA15bsa057_u:83": "2/48 pramāṇanivṛttāvapyarthābhāvāsiddheriti /",
  "SA15bsa057_u:84": "iti dvitīyaḥ svārthānumānaparicchedaḥ //",
  "SA15bsa057_u:85": "______________________________________________________________",
  "SA15bsa057_u:86": "tṛtīyaḥ parārthānumānaparicchedaḥ",
  "SA15bsa057_u:87": "3/1 trirūpaliṅgākhyānaṃ parārthamanumānam /",
  "SA15bsa057_u:88": "3/2 kāraṇe kāryopacārāt /",
  "SA15bsa057_u:89": "3/3 tad dvividham /",
  "SA15bsa057_u:90": "3/4 prayogabhedāt /",
  "SA15bsa057_u:91": "3/5 sādhamyavadvaidhamyavacca /",
  "SA15bsa057_u:92": "3/6 nānāyorarthataḥ kaścid bhedaḥ /",
  "SA15bsa057_u:93": "3/7 anyatra prayogabhedāt /",
  "SA15bsa057_u:94": "3/",
  "SA15bsa057_u:95": "8 tatra sādharmyavatprayogaḥ- yadupalabdhilakṣaṇaprāptaṃ sannopalabhyate so 'sad vyavahāraviṣayaḥ siddhaḥ /",
  "SA15bsa057_u:96": "yathā- anyo dṛṣṭaḥ kaścid śaśaviṣāṇādiḥ /",
  "SA15bsa057_u:97": "nopalabhyate ca kvacit pradeśaviśeṣe upalabdhilakṣaṇaprāpo ghaṭa ityanupalabdhiprayogaḥ /",
  "SA15bsa057_u:98": "3/",
  "SA15bsa057_u:99": "9 tathā svabhāvahetoḥ prayogaḥ- yat sat tat sarvamanityam,",
  "SA15bsa057_u:100": "yathā ghaṭādiriti śuddhasya svabhāvahetoḥ prayogaḥ /",
  "SA15bsa057_u:101": "3/10 yadutpattimat tadanityamiti svabhāvabhūtadharmabhedena svabhāvasya prayogaḥ /",
  "SA15bsa057_u:102": "3/11 yat kṛtakaṃ tadanityamityupādhibhedena /",
  "SA15bsa057_u:103": "3/12 apekṣitaparavyāpāro hi bhāvaḥ svabhāvaniṣpattau kṛtaka iti /",
  "SA15bsa057_u:104": "3/13 evaṃ prayatnāntarīyaka- pratyayabhedabheditvādayo 'pi draṣṭavyāḥ /",
  "SA15bsa057_u:105": "3/14 sannutpattimān kṛtako vā śabda iti pakṣadharmopadarśanam /",
  "SA15bsa057_u:106": "3/",
  "SA15bsa057_u:107": "15 sarva ete sādhanadharmā yathāsvaṃ pramāṇaiḥ siddhasādhanadharmamātrānubandhe eva sādhyadharme 'vagantavyāḥ /",
  "SA15bsa057_u:108": "3/16 tasyaiva tatsvabhāvatvāt /",
  "SA15bsa057_u:109": "3/17 svabhāvasya ca hetutvāt /",
  "SA15bsa057_u:110": "3/18 vastutastayostādātmyam /",
  "SA15bsa057_u:111": "3/19 tanniṣpattāvaniṣpannasya tatsvabhāvatvābhāvāt /",
  "SA15bsa057_u:112": "3/20 vyabhicārasambhavācca /",
  "SA15bsa057_u:113": "3/21 kāryahetoḥ prayogaḥ - yatra dhūmastatrāgniḥ / yathā mahānasādau / asti ceha dhūma iti /",
  "SA15bsa057_u:114": "3/22 ihāpi siddhe eva kāryakāraṇabhāve kāraṇe sādhye kāryaheturvaktavyaḥ /",
  "SA15bsa057_u:115": "3/",
  "SA15bsa057_u:116": "23 vaidharmyavataḥ prayogaḥ- yat sadupalabdhilakṣaṇaprāptaṃ tadupalabhyata eva /",
  "SA15bsa057_u:117": "yathā nīlādiviśeṣaḥ /",
  "SA15bsa057_u:118": "na caivamihopalabdhilakṣaṇaprāptasya sata upalabdhirghaṭasyetyanupalabdhiprayogaḥ /",
  "SA15bsa057_u:119": "3/",
  "SA15bsa057_u:120": "24 asatyanityatve, nāsti sattvamutpattimattvaṃ kṛtakatvaṃ vā /",
  "SA15bsa057_u:121": "saṃśca śabda utpattimān kṛtako veti svabhāvahetoḥ prayogaḥ /",
  "SA15bsa057_u:122": "3/25 asatyagnau na bhavatyeva dhūmaḥ / atra cāsti dhūma iti kāryahetoḥ prayogaḥ /",
  "SA15bsa057_u:123": "3/26 sādharmyeṇāpi hi prayoge 'rthād vaidharmyagatiriti /",
  "SA15bsa057_u:124": "3/27 asati tasmin sādhyena hetoranvayābhāvāt /",
  "SA15bsa057_u:125": "3/28 tathā vaidharmyeṇāpyanvayagatiḥ /",
  "SA15bsa057_u:126": "3/29 asati tasmin sādhyābhāve hetvabhāvasyāsiddheḥ /",
  "SA15bsa057_u:127": "3/30 nahi svabhāvapratibandhe 'satyekasya nivṛttāvaparasya niyamena nivṛttiḥ /",
  "SA15bsa057_u:128": "3/31 sa ca dviprakāraḥ- sarvasya tādātmyalakṣaṇastadutpatilakṣaṇaścetyuktam /",
  "SA15bsa057_u:129": "3/",
  "SA15bsa057_u:130": "32 tena hi nivṛtti kathayatā pratibandho darśanīyaḥ /",
  "SA15bsa057_u:131": "tasmāt nivṛttivacanamākṣiptapratibandhopadarśanameva bhavati /",
  "SA15bsa057_u:132_0": "yacca pratibandhopadarśanaṃ tadevānvayavacanamityekenāpi vākyenānvayamukhena vyatirekamukhena",
  "SA15bsa057_u:132_1": "vā prayuktena sapakṣāsapakṣayorliṅgasya sadasattvakhyāpanaṃ kṛtaṃ bhavatīti nāvaśayaṃ",
  "SA15bsa057_u:132_2": "vākyadvayaprayogaḥ /",
  "SA15bsa057_u:133": "3/",
  "SA15bsa057_u:134": "33 anupalabdhāvapi - yat sad upalabdhilakṣaṇaprāptaṃtadupalabhyata evetyukte,",
  "SA15bsa057_u:135": "anupalabhyamānaṃ tādṛśamasaditi pratīreranvayasiddhiḥ /",
  "SA15bsa057_u:136": "3/34 dvayorapyanayoḥ prayogayornāvaśyaṃ pakṣanirdeśaḥ /",
  "SA15bsa057_u:137": "3/",
  "SA15bsa057_u:138": "35 yasmāt sādharmyavatprayoge 'pi yadupalabdhilakṣaṇaprāptaṃ sannopalabhyate,",
  "SA15bsa057_u:139": "so 'sadvayavahāraviṣayaḥ /",
  "SA15bsa057_u:140": "nopalabhyate cātropalabdhilakṣaṇaprāpto ghaṭa ityukte sāmarthyādeva neha ghaṭa iti bhavati /",
  "SA15bsa057_u:141": "3/",
  "SA15bsa057_u:142": "36 tathā vaidharmyavatprayoge 'pi- yaḥ sad vyavahāraviṣaya upalabdhilakṣaṇaprāptaḥ sa upalabhyata eva /",
  "SA15bsa057_u:143": "na tathātra tādṛśo ghaṭa upalabhyate- ityukte sāmarthyādeva neha sadvayavahāraviṣaya iti bhavati /",
  "SA15bsa057_u:144": "3/37 kīdṛśaḥ punaḥ pakṣa iti nirdeśyaḥ?",
  "SA15bsa057_u:145": "3/38 svarūpeṇaiva svayamiṣṭo 'nirākṛtaḥ pakṣa iti /",
  "SA15bsa057_u:146": "3/39 svarūpeṇeti sādhyatveneṣṭaḥ /",
  "SA15bsa057_u:147": "3/40 svarūpeṇaiveti sādhyatvenaiveṣṭo na sādhanatvenāpi /",
  "SA15bsa057_u:148": "3/",
  "SA15bsa057_u:149": "41 yathā śabdasyānityatve sādhye cākṣuṣatvaṃ hetuḥ,",
  "SA15bsa057_u:150": "śabde 'siddhatvāt sādhyaṃ bhavatīti na punastadiha sādhyatvenaiveṣṭam,",
  "SA15bsa057_u:151": "sādhanatvenāpyabhidhānāt /",
  "SA15bsa057_u:152": "3/42 svayamiti vādinā /",
  "SA15bsa057_u:153": "3/43 yastadā sādhanamāha /",
  "SA15bsa057_u:154": "3/",
  "SA15bsa057_u:155": "44 etena yadyapi kvacicchāstre sthitaḥ sādhanamāha,",
  "SA15bsa057_u:156": "tacchāstrakāreṇa tasmin dharmiṇyanekadharmābhyupagame 'pi yastadā tena vādinā dharmaḥ svayaṃ sādhayitu miṣṭaḥ sa eva sādhyo netara ityuktaṃ bhavati /",
  "SA15bsa057_u:157": "3/",
  "SA15bsa057_u:158": "45 iṣṭa iti yatrārthe vivādena sādhanamupanyastaṃ tasya siddhimicchatā so 'nukto 'pi vacanena sādhyo bhavati /",
  "SA15bsa057_u:159": "3/46 tadadhikaraṇatvād vivādasya /",
  "SA15bsa057_u:160": "3/",
  "SA15bsa057_u:161": "47 yathā parārthāścakṣurādayaḥ saṅghātatvācchayanāsanādyaṅgavaditi /",
  "SA15bsa057_u:162": "atrātmārthā ityanuktāvapyātmārthataiva sādhyā /",
  "SA15bsa057_u:163": "tena noktamātrameva sādhyam- ityuktaṃ bhavati /",
  "SA15bsa057_u:164": "3/",
  "SA15bsa057_u:165": "48 anirākṛta iti- etallakṣaṇayoge 'pi yaḥ sādhayitumiṣṭo 'pyarthaḥ pratyakṣānumānapratītisvavacanairnirākriyate,",
  "SA15bsa057_u:166": "na sa pakṣa iti pradarśanārtham /",
  "SA15bsa057_u:167": "3/49 tatra pratyakṣanirākṛto yathā- aśrāvaṇaḥ śabda iti / (1)",
  "SA15bsa057_u:168": "3/50 anumānanirākṛto yathā- nityaḥ śabda iti / (2)",
  "SA15bsa057_u:169": "3/51 pratītinirākṛto yathā- acandraḥ śaśīti / (3)",
  "SA15bsa057_u:170": "3/52 svavacananirākṛto yathā- nānumānaṃ pramāṇamiti / (4)",
  "SA15bsa057_u:171": "3/53 iti catvāraḥ pakṣābhāsa nirākṛtā bhavanti /",
  "SA15bsa057_u:172": "3/",
  "SA15bsa057_u:173": "54 evaṃ siddhasya asiddhasyāpi sādhanatvenābhimatasya,",
  "SA15bsa057_u:174": "svayaṃ vādinā tadā sādhayitumaniṣṭasya,",
  "SA15bsa057_u:175": "uktamātrasya,",
  "SA15bsa057_u:176": "nirākṛtasya ca viparyeṇa sādhya iti /",
  "SA15bsa057_u:177": "tenaiva svarūpeṇābhimato vādina iṣṭo 'nirākṛtaḥ pakṣa iti pakṣalakṣaṇamanavadyaṃ darśitaṃ bhavati /",
  "SA15bsa057_u:178": "3/",
  "SA15bsa057_u:179": "55 trirūpaliṅgākhyānaṃ parārthānumānamityuktam /",
  "SA15bsa057_u:180": "tatra trayāṇāṃ rūpāṇāmekasyāpi rūpasyānukto sādhanābhāsaḥ /",
  "SA15bsa057_u:181": "3/56 uktāvapyasiddhau sandehe vā pratipādyapratipādakayo /",
  "SA15bsa057_u:182": "3/57 ekasya rūpasya dharmisambandhasyāsiddho sandehe vāsiddho hetvābhāsaḥ /",
  "SA15bsa057_u:183": "3/58 yathā - 'anityaḥ śabdaḥ' iti sādhye cākṣuṣatvamubhayāsiddham /",
  "SA15bsa057_u:184": "3/",
  "SA15bsa057_u:185": "59 'cetanāstaravaḥ' iti sādhye sarvatvagapaharaṇe maraṇaṃ prativādyasiddham,",
  "SA15bsa057_u:186": "vijñānendriyāyurnirodhalakṣaṇasya maraṇasyānenābhyupagamāt,",
  "SA15bsa057_u:187": "tasya ca taruṣvasambhavāt /",
  "SA15bsa057_u:188": "3/",
  "SA15bsa057_u:189": "60 'acetanāḥ sukhādaya' iti sādhye utpattimattvam, anityatvaṃ va sāṃkhyasya svayaṃ vādino 'siddham /",
  "SA15bsa057_u:190": "3/61 tathā svayaṃ tadāśrayaṇasya vā sandehe 'siddhiḥ /",
  "SA15bsa057_u:191": "3/62 yathā vāṣpādibhāvena sandihyamāno bhūtasaṅghāto 'gnisiddhāvupadiśyamānaḥ sandigdhāsiddhaḥ /",
  "SA15bsa057_u:192": "3/63 yatheha nikuñje mayūraḥ kekāyitāditi /",
  "SA15bsa057_u:193": "3/64 tadāpātadeśabhrame /",
  "SA15bsa057_u:194": "3/65 dharmyasiddhāvapyasiddhaḥ- yathā sarvagata ātmeti sādhye sarvatropalabhyamānaguṇatvam /",
  "SA15bsa057_u:195": "3/66 tathaikasya rūpasyāsapakṣe 'sattvasyasiddhāvanaikāntiko hetvābhāsaḥ /",
  "SA15bsa057_u:196": "3/",
  "SA15bsa057_u:197": "67 yathā śabdasyānityatvādike dharme sādhye prameyatvādiko dharmaḥ sapakṣavipakṣayoḥ sarvatraikadeśe vā vartamānaḥ /",
  "SA15bsa057_u:198": "3/68 tathā- asyaiva rūpasya sandehe 'pyanaikāntika eva /",
  "SA15bsa057_u:199": "3/",
  "SA15bsa057_u:200": "69 yathāsarvajñaḥ kaścidvivakṣitaḥ puruṣo rājādimān veti sādhye vaktṛtvādiko dharmaḥ sandigdhavipakṣavyāvṛttikaḥ /",
  "SA15bsa057_u:201": "3/",
  "SA15bsa057_u:202": "70 'sarvajño vaktā nopalabhyate' ityevamprakārasyānupalambhasyādṛśyātmaviṣayatvena sandehahetutvāt /",
  "SA15bsa057_u:203": "tato 'sarvajñaviparyād vaktṛtvādervyāvṛttiḥ sandigdhā /",
  "SA15bsa057_u:204": "3/",
  "SA15bsa057_u:205": "71 vaktṛtvasarvajñatvayorvirodhābhāvācca yaḥ sarvajñaḥ sa vaktā na bhavatītyadarśane 'pi vyatireko na sidhyanti, sandehāt /",
  "SA15bsa057_u:206": "3/72 dvividho hi padārthānāṃ virodha /",
  "SA15bsa057_u:207": "3/73 avikalakāraṇasya bhavato 'nyabhāve 'bhāvād virodhagatiḥ",
  "SA15bsa057_u:208": "3/74 śītoṣṇasparśavat /",
  "SA15bsa057_u:209": "3/75 parasparaparihārasthitalakṣaṇatayā vā bhāvābhāvavat /",
  "SA15bsa057_u:210": "3/76 sa ca dvividho 'pi virodho vaktṛtvasarvajñatvayorna sambhavati /",
  "SA15bsa057_u:211": "3/77 na cāviruddhavidheranupalabdhāvapyabhāvagatiḥ /",
  "SA15bsa057_u:212": "3/78 rāgādīnāṃ vacanādeśca kāryakāraṇabhāvāsiddheḥ /",
  "SA15bsa057_u:213": "3/79 arthāntarasya cākāraṇasya nivṛttau na vacanādernivṛttiḥ /",
  "SA15bsa057_u:214": "3/80 iti sandigdhavyatireko 'naikāntiko vacanādiḥ /",
  "SA15bsa057_u:215": "3/81 dvayo rūpayorviparyayasiddhau viruddhaḥ /",
  "SA15bsa057_u:216": "3/82 kayordvayoḥ?",
  "SA15bsa057_u:217": "3/",
  "SA15bsa057_u:218": "83 sapakṣe sattvasya, asapakṣe cāsattvasya /",
  "SA15bsa057_u:219": "yathā kṛtatvaṃ prayatnānantarīya katvaṃ ca nityatve sādhye viruddho hetvābhāsaḥ /",
  "SA15bsa057_u:220": "3/84 anayoḥ sapakṣe 'sattvam, asapakṣe ca sattvamiti viparyayasiddhiḥ /",
  "SA15bsa057_u:221": "3/85 etau ca sādhyaviparyayasādhanād viruddhau /",
  "SA15bsa057_u:222": "3/86 nanu ca tṛtīyo 'pīṣṭavighātakṛd viruddhaḥ /",
  "SA15bsa057_u:223": "3/87 yathā parārthāścakṣurādayaḥ saṅghātatvāccayanāsanādyaṅgavaditi /",
  "SA15bsa057_u:224": "3/88 tadiṣṭāsaṃhatapārārthyaviparyayasādhanād viruddhaḥ /",
  "SA15bsa057_u:225": "3/89 sa iha kasmānnoktaḥ?",
  "SA15bsa057_u:226": "3/90 anayorevāntarbhāvāt /",
  "SA15bsa057_u:227": "3/91 nahyayamābhyāṃ sādhyāviparyayasādhanatvena bhidyate /",
  "SA15bsa057_u:228": "3/92 nahīṣṭoktayoḥ sādhyatvena kaścidviśeṣa iti /",
  "SA15bsa057_u:229": "3/93 dvayo rūpayorekasyāsiddhāvaparasya ca sandehe 'naikāntika /",
  "SA15bsa057_u:230": "3/94 yathā vītarāgaḥ kaścit sarvajño vā, vaktṛtvāditi / vyatireko 'trāsiddhaḥ / sandigdho 'nvayaḥ /",
  "SA15bsa057_u:231": "3/95 sarvajñavītarāgayorviprakarṣād vacanādestatra sattvamasattvaṃ vā sandigdham",
  "SA15bsa057_u:232": "3/96 anayoreva dvayo rūpayoḥ sandehe 'naikāntikaḥ /",
  "SA15bsa057_u:233": "3/97 yathā sātmakaṃ jīvaccharīraṃ prāṇādimattvāditi /",
  "SA15bsa057_u:234": "3/98 na hi sātmakanirātmakābhyāmanyo rāśirasti yatrāyaṃ prāṇādirvarteta /",
  "SA15bsa057_u:235": "3/99 ātmano vṛttivyavacchedābhyāṃ sarvasaṃgrahāt /",
  "SA15bsa057_u:236": "3/100 nāpyanayorekatra vṛttiniścayaḥ /",
  "SA15bsa057_u:237": "3/101 sātmakatvenānātmakatvena vā prasiddhe prāṇāderasiddheḥ /",
  "SA15bsa057_u:238": "3/",
  "SA15bsa057_u:239": "102 tasmājjīvaccharīrasambandhī prāṇādiḥ sātmakādanātmakācca sarvasmād vyāvṛttatvenāsiddhestābhyāṃ na vyatiricyate /",
  "SA15bsa057_u:240": "3/103 na tatrānveti /",
  "SA15bsa057_u:241": "3/104 ekātmanyapyasiddheḥ /",
  "SA15bsa057_u:242": "3/105 nāpi sātmakādanātmakācca tasyānvayavyatirekayorabhāvaniścayaḥ /",
  "SA15bsa057_u:243": "3/106 ekābhāvaniścayasyāparabhāvaniścayanāntarīyakatvāt /",
  "SA15bsa057_u:244": "3/107 anvayavyatirekayoranyonyavyavachedarūpatvāt, tata evānvayavyatirekayoḥ sandehādanaikāntikaḥ /",
  "SA15bsa057_u:245": "3/108 sādhyetarayorato niścayābhāvāt /",
  "SA15bsa057_u:246": "3/",
  "SA15bsa057_u:247": "109 evameṣāṃ trayāṇāṃ rūpāṇāmekaikasya dvayordvayorvā rūpayorasiddhau sandehe vā yathāyogamasiddhaviruddhānaikāntikāstrayo hetvābhāsāḥ /",
  "SA15bsa057_u:248": "3/110 viruddhāvyabhicāryapi saṃśayaheturuktaḥ / sa iha kasmānnoktaḥ?",
  "SA15bsa057_u:249": "3/111 anumānaviṣaye 'sambhavāt /",
  "SA15bsa057_u:250": "3/112 na hi sambhavo 'sti kāryasvasvabhāvayoruktalakṣaṇayoranupalambhasya ca viruddhatāyāḥ /",
  "SA15bsa057_u:251": "3/113 na cānyo 'vyabhicārī /",
  "SA15bsa057_u:252": "3/",
  "SA15bsa057_u:253": "114 tasmādavastudarśanabalapravṛttamāgamaśrayamanumānamāśritva tadarthavicāreṣu viruddhāvyabhicārī sādhanadoṣa uktaḥ /",
  "SA15bsa057_u:254": "3/115 śāstrakārāṇāmartheṣu bhrāntyā viparītasvabhāvopasaṃhārasambhavāt /",
  "SA15bsa057_u:255": "3/116 na hyasya sambhavo yathāvasthitavastusthitiṣvātmakāryānupalambheṣu /",
  "SA15bsa057_u:256": "3/",
  "SA15bsa057_u:257": "117 tatrodāharaṇam- yat sarvadeśasthitaiḥ svasambandhibhiryugapadabhisambadhyate tat sarvagatam /",
  "SA15bsa057_u:258": "yathākāśam /",
  "SA15bsa057_u:259": "abhisambadhyate ca sarvadeśāvasthitaiḥ svasambandhibhiryugapat sāmānyamiti /",
  "SA15bsa057_u:260": "3/118 tatsambandhisvabhāvamātrānubandhinī taddeśasannihitasvabhāvatā /",
  "SA15bsa057_u:261": "3/119 na hi yo yatra nāsti sa taddeśamātmanā vyāpnotīti svabhāvahetuprayogaḥ /",
  "SA15bsa057_u:262": "3/",
  "SA15bsa057_u:263": "120 dvitīyo 'pi prayogaḥ- yadupalabdhilakṣaṇaprāptaṃ sannopalabhyate na tat tatrāsti /",
  "SA15bsa057_u:264": "tadyathā- kvacidavidyamānā ghaṭaḥ /",
  "SA15bsa057_u:265": "nopalabhyate copalabdhilakṣaṇaprāptaṃ sāmānyaṃ vyaktyantarāleṣviti /",
  "SA15bsa057_u:266": "ayamanupalambhaḥ svabhāvaśca parasparaviruddhārthasādhanādekatra saṃśayaṃ janayataḥ /",
  "SA15bsa057_u:267": "3/",
  "SA15bsa057_u:268": "121 trirūpo heturuktaḥ /",
  "SA15bsa057_u:269": "tāvatā nārthapratītiriti napṛthagdṛṣṭānto nāma sādhanāvayava kaścit /",
  "SA15bsa057_u:270": "tena nāsya lakṣaṇaṃ pṛthagucyateḥ gatārthatvāt /",
  "SA15bsa057_u:271": "3/",
  "SA15bsa057_u:272": "122 hetoḥ sapakṣaḥ eva sattvamasapakṣācca sarvato vyāvṛtto rūpamuktamabhadena /",
  "SA15bsa057_u:273": "punarviśeṣeṇa kāryasvabhāvayoruktalakṣaṇayorjanmatanmātranubandho daśanīyāvuktau /",
  "SA15bsa057_u:274": "tacca darśayatā- yatra dhūmastatrāgniḥ, asatyagnau na kvacid dhūmā yathā mahānasetarayoḥ /",
  "SA15bsa057_u:275": "yatra kṛtakatvaṃ tatrānityatvam, anityatvābhāve kṛtakatvāsambhavo yathā ghaṭākāśayoriti darśanīyam /",
  "SA15bsa057_u:276": "na hyanyathā sapakṣavipakṣayāḥ sadasattve yathoktaprakāre śakye daśayitum /",
  "SA15bsa057_u:277": "tatkāryatāniyamaḥ kāryaliṅgasya, svabhāvaliṅgasya ca svabhāvena vyāptiḥ /",
  "SA15bsa057_u:278": "asmiścārthe darśite darśita eva dṛṣṭāntā bhavatiḥ, etāvanmātrarūpatvān tasyeti /",
  "SA15bsa057_u:279": "3/123 etenaiva dṛṣṭāntadoṣā api nirastā bhavanti /",
  "SA15bsa057_u:280": "3/",
  "SA15bsa057_u:281": "124 yathā nityaḥ śabdo 'mūrtatvāt, karmavat paramāṇuvad ghaṭavaditi /",
  "SA15bsa057_u:282": "ete dṛṣṭāntābhāsāḥ sādhyasādhanadharmobhayāvikalāḥ /",
  "SA15bsa057_u:283": "3/",
  "SA15bsa057_u:284": "125 tathā sandigdhasādhyadharmādayaśca /",
  "SA15bsa057_u:285": "yathā- rāgādimānayaṃ vacanād rathyāpuruṣavat /",
  "SA15bsa057_u:286": "maraṇadharmāyaṃ puruṣo rāgādimattvād rathyāpuruṣavat /",
  "SA15bsa057_u:287": "asarvajño 'yaṃ(puruṣo) rāgādimattvād rathyāpuruṣavaditi /",
  "SA15bsa057_u:288": "3/",
  "SA15bsa057_u:289": "126 tathānanvayo 'pradarśitānvayaśca /",
  "SA15bsa057_u:290": "yathā- yo vaktā sa rāgādimān, iṣṭapuruṣavat /",
  "SA15bsa057_u:291": "anityaḥ śabdaḥ kṛtakatvād ghaṭavaditi /",
  "SA15bsa057_u:292": "3/127 tathā viparītānvayaḥ- yadanityaṃ tat kṛtakamiti /",
  "SA15bsa057_u:293": "3/128 sādharmyeṇa dṛṣṭāntadoṣāḥ /",
  "SA15bsa057_u:294": "3/129 vaidharmyeṇāpi- paramāṇuvat karmavad ākāśavaditi sādhyādyavyatirekiṇaḥ /",
  "SA15bsa057_u:295": "3/",
  "SA15bsa057_u:296": "130 tathā sandigdhasādhyavyatirekādayaḥ /",
  "SA15bsa057_u:297": "yathā- asarvajñāḥ kapilādayo 'nāptā vā avidyamānasarvajñatāptatāliṅgabhutapramāṇātiśayaśāsanatvāditi /",
  "SA15bsa057_u:298": "atra vaidharmyodāharaṇam- yaḥ sarvajña āpto vā sa jyotirjñānādikamu padiṣṭavān /",
  "SA15bsa057_u:299": "yathā- ṛṣabhavardhamānādiriti /",
  "SA15bsa057_u:300": "tatrāsarvajñatānāptatayoḥ sādhyadharmayoḥ sandigdho vyatirekaḥ /",
  "SA15bsa057_u:301": "3/",
  "SA15bsa057_u:302": "131 sandigdhasādhanavatireko yathā- na trayividā brāhmaṇe grāhyavacana kaścid vivikṣitaḥ puruṣo rāgādimattvāditi /",
  "SA15bsa057_u:303": "atra vedharmyodāharaṇam- ye grāhyavacanā na te rāgādimantaḥ,",
  "SA15bsa057_u:304": "tadyathā gautamādayo dharmaśāstrāṇāṃ praṇetāra iti /",
  "SA15bsa057_u:305": "gautamādibhyo rāgādimattvasya sādhanadharmasya vyāvṛttiḥ sandigdhā /",
  "SA15bsa057_u:306": "3/",
  "SA15bsa057_u:307": "132 sandigdhobhayavyatireko yathā- avitarāgāḥ kapilādayaḥ, parigrahāgrahayogāditi /",
  "SA15bsa057_u:308": "atra vaidharmyaṇodāharanam- yo vītarāgo na tasya parigrahāgraha, yatharṣabhāderiti /",
  "SA15bsa057_u:309": "ṛṣabhāderavītarāgatvaparigrahāgrahayogayoḥ sādhyasādhanadharmayoḥ sandigdho vyatiraikaḥ /",
  "SA15bsa057_u:310": "3/",
  "SA15bsa057_u:311": "133 avyatireko yathā- avītarāgo 'yaṃ vaktṛtvāt /",
  "SA15bsa057_u:312": "vaidharmyeṇodāharaṇam - yatrāvītarāgatvaṃ nāsti, na sa vaktā /",
  "SA15bsa057_u:313": "yathā - upalakhaṇḍa iti /",
  "SA15bsa057_u:314": "yadyapyupalakhaṇḍādubhayaṃ vyāvṛtta tathāpi sarvo vītarāgo na vakteti vyāptyā vyatiraikāsiddheravyatirakaḥ /",
  "SA15bsa057_u:315": "3/134 apradarśitavyatireko yathā- anityaḥ śabdaḥ kṛtakatvādākāśavaditi vaidharmyeṇa /",
  "SA15bsa057_u:316": "3/135 viparītavyatireko yathā- yadakṛtaka tannityaṃ bhavatīti",
  "SA15bsa057_u:317": "3/",
  "SA15bsa057_u:318": "136 na hyebhirdṛṣṭāntābhāsairhetoḥ sāmānyalakṣaṇaṃ sapakṣa eva sattvaṃ vipakṣo ca sarvatrāsattvameva niścayena śakyaṃ darśayituṃ viśeṣalakṣaṇaṃ vā /",
  "SA15bsa057_u:319": "tadarthāpattyaiṣāṃ nirāso draṣṭavyaḥ /",
  "SA15bsa057_u:320": "3/137 dūṣaṇā nyūnatādyuktiḥ /",
  "SA15bsa057_u:321": "3/",
  "SA15bsa057_u:322": "138 ye pūrvaṃ nyūnatādayaḥ sādhanadoṣā uktāsteṣāmudbhāvanaṃ dūṣaṇam /",
  "SA15bsa057_u:323": "tena pareṣṭārthasiddhipratibandhāt /",
  "SA15bsa057_u:324": "3/139 dūṣaṇābhāsāstu jātayaḥ /",
  "SA15bsa057_u:325": "3/140 abhūtadoṣodbhāvanāni jātyuttaraṇīti /",
  "SA15bsa057_u:326": "iti tṛtīyaḥ parārthānumānaparicchedaḥ //",
  "SA15bsa057_u:327": "nyāyabinduprakaraṇaṃ samāptam"
}