{
  "SA01nagdhdbu:0": "ācārya nāgārjunapādaviracitam",
  "SA01nagdhdbu:1": "āryadharmadhātugarbhavivaraṇam",
  "SA01nagdhdbu:2": "bhāratīyabhāṣāyām- āryadharmadhātugarbhavivaraṇam/",
  "SA01nagdhdbu:3": "bhoṭabhāṣāyām- phag-pā-chos-kyi-yiṅ-kyi-ñiṅ-poī-nama-para-ḍela-pā/",
  "SA01nagdhdbu:4": "namo ratnatrayāya",
  "SA01nagdhdbu:5": "ye dharmā hetuprabhavā hetuṃ teṣāṃ tathāgato hyavadat /",
  "SA01nagdhdbu:6": "teṣāṃ ca yo nirodha evaṃvādī mahāśramaṇaḥ //",
  "SA01nagdhdbu:7": "ityuktam /",
  "SA01nagdhdbu:8": "atra 'ye dharmā' iti saptabhiḥ prakārairavagantavyāḥ /",
  "SA01nagdhdbu:9": "tadyathā- vijñānaṃ nāmarūpaṃ ṣaḍāyatanaṃ sparśaḥ vedanā jātirjarāmaraṇamiti /",
  "SA01nagdhdbu:10": "ime dharmāḥ api pañcabhyaḥ prakārebhya utpadyanta iti 'hetuprabhavāḥ' ityuktam /",
  "SA01nagdhdbu:11": "ke te pañca hetavaḥ?",
  "SA01nagdhdbu:12": "avidyā tṛṣṇā upādānaṃ saṃskārā bhavaśceti /",
  "SA01nagdhdbu:13": "saptavidhānāṃ dharmāṇāṃ pañcaprakārāṇāṃ ca teṣāṃ hetūnāṃ nirodhastāvad 'hetuṃ teṣāṃ ca yo nirodhaḥ' ityādinābhihitaḥ /",
  "SA01nagdhdbu:14": "sa evopaśamaḥ mokṣo nirvāṇamiti /",
  "SA01nagdhdbu:15": "sa ca kenoktaḥ?",
  "SA01nagdhdbu:16": "'tathāgato hyavadat /",
  "SA01nagdhdbu:17": "iti /",
  "SA01nagdhdbu:18": "tenopadiṣṭa ityabhiprāyeṇa tathā kathitam /",
  "SA01nagdhdbu:19": "arthānāṃ yathā sthitistathā (yathāvat)",
  "SA01nagdhdbu:20": "avabodhāt 'tathāgataḥ' ityucyate /",
  "SA01nagdhdbu:21": "vastūnāṃ yathā sthitiḥ,",
  "SA01nagdhdbu:22": "tasyā abhrāntatayā anyebhyo deśanād vā 'tathāgataḥ' /",
  "SA01nagdhdbu:23": "evaṃvidho yo deśakaḥ,",
  "SA01nagdhdbu:24": "yaścaivaṃ svayaṃ bodhakaḥ śravaṇaśīlayuktaśca sa 'evaṃvādī' (mahāśramaṇaḥ) ityuktaḥ /",
  "SA01nagdhdbu:25": "'mahān'-śabdaḥ pradhāna-adbhutaparamapravaraparyāyaḥ /",
  "SA01nagdhdbu:26": "yo vādī vidvān vīraḥ tapasvī mahotsāhaḥ tīvravīryaḥ adbhutakarmakāri ca bhavati,",
  "SA01nagdhdbu:27": "sa eva 'mahān' iti /",
  "SA01nagdhdbu:28": "(sa) aśeṣajñātavyānāṃ jñānād 'vidvān' /",
  "SA01nagdhdbu:29": "aśeṣakleśānāṃ damane samarthatvād 'vīraḥ' /",
  "SA01nagdhdbu:30": "śīlasya samyagbhāvanayā 'tapasvī' /",
  "SA01nagdhdbu:31": "guṇādiṣvaparikhedād 'mahotsāhaḥ' /",
  "SA01nagdhdbu:32": "yasya śiraḥ kapālaṃ vā agninā dīptam,",
  "SA01nagdhdbu:33": "tadavān iva 'tīvravīryaḥ tathā adbhutadharmāṇāṃ sākṣātkāritvād 'adbhutakarmakārī' iti /",
  "SA01nagdhdbu:34": "etādṛśa eva 'mahān' ityucyate /",
  "SA01nagdhdbu:35": "śramaṇaḥ iti pāpānāṃ kleśānāṃ copaśamād 'śramaṇaḥ' /",
  "SA01nagdhdbu:36": "sarvapāpānāṃ prakṣālanād 'brāhmaṇaḥ' /",
  "SA01nagdhdbu:37": "kleśaklamathaparivarjanād 'śramaṇaḥ' svakīyamalāpasāraṇāt 'pravrajitaḥ' iti /",
  "SA01nagdhdbu:38": "ityevaṃvidhairguṇaiḥ samanvāgata iti /",
  "SA01nagdhdbu:39": "bhagavatā buddhenokta ityanena yogaḥ karaṇīyaḥ /",
  "SA01nagdhdbu:40": "evameva duḥkhasamudayanirodhamārgasatyeṣvapi yogaḥ karaṇīyaḥ /",
  "SA01nagdhdbu:41": "avidyāhetoḥ saṃskārāḥ,",
  "SA01nagdhdbu:42": "ityārabhya jarāmaraṇaparyantaṃ (svabhāvataḥ siddhaṃ)",
  "SA01nagdhdbu:43": "kartāramanapekṣya samutpādastāvad 'anulomaḥ' /",
  "SA01nagdhdbu:44": "avidyādihetūnāṃ nivṛtteravabodhaḥ 'pratilomaḥ' ityuktaḥ /",
  "SA01nagdhdbu:45": "avidyānivṛtteḥ saṃskārādayo nivartanta ityupadeśakārakatvāt (bhagavān buddha eva)",
  "SA01nagdhdbu:46": "'mahāśramaṇaḥ' iti /",
  "SA01nagdhdbu:47": "// ācāryanāgārjunapādaviracitaṃ 'āryadharmadhātugarbhavivaraṇam' samāptam //",
  "SA01nagdhdbu:48": "bhāratīyopādhyāyena jñānagarbheṇa 'mahālocāvā vande palacekmahābhāgena cānūdya saṃśodhya ca sunirṇītam /",
  "SA01nagdhdbu:49": "// bhavatu sarvamaṅgalam //"
}