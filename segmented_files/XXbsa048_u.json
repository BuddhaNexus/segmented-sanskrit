{
  "XXbsa048_u:0": "Caryāmelāvaṇapradīpaḥ",
  "XXbsa048_u:1": "1. prathamaḥ paricchedaḥ",
  "XXbsa048_u:2": "om namaḥ śrīvajrasattvāya /",
  "XXbsa048_u:3": "namata khasamaniḥsvabhāvaśuddhaṃ namatāśeṣamanakṣaramavācyam /",
  "XXbsa048_u:4": "namatānāgatasarvagaṃ sugataṃ namata samastāśeṣasarvaśūnyam //",
  "XXbsa048_u:5": "\"arthapratiśaraṇena bhavitavyaṃ śabdastu yathā tathā\" iti /",
  "XXbsa048_u:6": "tantre-",
  "XXbsa048_u:7": "caturaśītisāhasre dharmaskandhe mahāmuneḥ /",
  "XXbsa048_u:8": "tattvaṃ vai ye na jānanti sarve te niṣphalāya vai // iti /",
  "XXbsa048_u:9": "ata āha-",
  "XXbsa048_u:10": "ādikarmikasandhānaṃ paramārthāvatāraṇe /",
  "XXbsa048_u:11": "upāyaścaiva saṃbuddhaiḥ sopānamiva nirmitaḥ // iti /",
  "XXbsa048_u:12": "prabodhanamelāvaṇasaṃśayaparicchedaḥ prathamaḥ // 1 //",
  "XXbsa048_u:13": "2. dvitīyaḥ paricchedaḥ",
  "XXbsa048_u:14": "pañcaskandhāḥ samāsena pañcabuddhāḥ prakīrtitāḥ /",
  "XXbsa048_u:15": "vajra-āyatanānyeva bodhisattvāgryamaṇḍalam //",
  "XXbsa048_u:16": "pṛthivī locanā khyātā abdhāturmāmakī smṛtā /",
  "XXbsa048_u:17": "pāṇḍarākhyā bhavettejastārā vāyuḥ prakīrtitā //",
  "XXbsa048_u:18": "rūpaśabdādibhirmantrī devatāṃ bhāvayet sadā //",
  "XXbsa048_u:19": "ityuktaṃ bhagavatā śrīguhyasamājamahāyogatantre /",
  "XXbsa048_u:20": "kulāḥ śatavidhāḥ proktāḥ saṃkṣepeṇa tu pañcadhā /",
  "XXbsa048_u:21": "punastrividhatāṃ yānti kāyavākcittabhedataḥ //",
  "XXbsa048_u:22": "\"pañcaskandhāḥ samāsena pañcabuddhāḥ prakīrtitāḥ / \"",
  "XXbsa048_u:23": "pañcahṛdayamāśritya pañcatanuvinirgatam /",
  "XXbsa048_u:24": "pañcavāyusamāyuktaṃ pañcakāmopabhogakṛta // iti /",
  "XXbsa048_u:25": "prakramaṇāt prāṇāyāmāccendriyadvāraistantubhiḥ /",
  "XXbsa048_u:26": "prakramate sadā kālaṃ prāṇa ityabhidhīyate //",
  "XXbsa048_u:27": "vātamūtrapurīṣāṇāṃ śukrādīnāṃ tathaiva ca /",
  "XXbsa048_u:28": "apanayanādapāno 'yaṃ yogibhirlakṣyate sadā //",
  "XXbsa048_u:29": "aśitaṃ khāditaṃ lehyaṃ peyaṃ coṣyañca sarvataḥ /",
  "XXbsa048_u:30": "samānayati yo nityaṃ samāna iti cocyate //",
  "XXbsa048_u:31": "ūrdhvagamāt saṃharaṇād bhakṣyabhojyādibhakṣaṇāt /",
  "XXbsa048_u:32": "udānakarmavijño 'yaṃ jñānena sahayogataḥ //",
  "XXbsa048_u:33": "vyāpanaṃ dhāraṇaṃ caiva gamanāgamanādikam /",
  "XXbsa048_u:34": "sarvasandhiṣu vyāptatvād vyāna ityabhidhīyate //",
  "XXbsa048_u:35": "pṛthivī locanā khyātā abdhāturmāmakī smṛtā /",
  "XXbsa048_u:36": "tejaḥ pāṇḍarā khyātā vāyustārā prakīrtitā //",
  "XXbsa048_u:37": "skandhaśca dhātuśca tathaivendriyaṃ ca pañcaiva pañcaiva kṛtaprabhedāḥ /",
  "XXbsa048_u:38": "tathāgatādhiṣṭhita ekaikaśaḥ saṃsārakarmāṇi kuto bhavanti //",
  "XXbsa048_u:39": "tathā sabāhyā viṣayāśca pañca ekaikaśaḥ pañcatathāgataiśca /",
  "XXbsa048_u:40": "svakasvakā nityamadhiṣṭhitāste jñānatrayaṃ pañcasamāśritaṃ ca //",
  "XXbsa048_u:41": "khadhātumadhyagataṃ cintenmaṇḍalaṃ sarvavajrajam /",
  "XXbsa048_u:42": "saṃhāraṃ ca prakurvīta yadīcchecchāntavajradhṛg // iti /",
  "XXbsa048_u:43": "pañcātmakaṃ pañcabhireva bhūtairdṛṣṭaṃ narāṇāṃ niyataṃ śarīram /",
  "XXbsa048_u:44": "tabhdāvabhāvairniyataṃ svacittaṃ prabhāvayantaḥ prabhavanti buddhāḥ // iti /",
  "XXbsa048_u:45": "khasamatantre 'pyāha-",
  "XXbsa048_u:46": "pañcabuddhātmaku sarvajago 'yaṃ paśyasu citraku nāṭaku divyam /",
  "XXbsa048_u:47": "yatra hi eku mahāsuhanāmā nṛtyati eku aneka rasena // iti /",
  "XXbsa048_u:48": "\"saṃkṣepeṇa tu pañcadhā\"",
  "XXbsa048_u:49": "kāyavākcittanidhyaptaiḥ svabhāvo nopalabhyate /",
  "XXbsa048_u:50": "mantramūrtiprayogeṇa na bodhirna ca bhāvanā //",
  "XXbsa048_u:51": "vicāryedaṃ samāsena kāyavākcittalakṣaṇam /",
  "XXbsa048_u:52": "bhāvayedvidhisaṃyogaṃ samādhiṃ mantrakalpitam // iti /",
  "XXbsa048_u:53": "na yogaḥ pratibimbeṣu niṣiktādiṣu jāyate /",
  "XXbsa048_u:54": "bodhicittamahāyogayoginastena devatāḥ //",
  "XXbsa048_u:55": "ātmā vai sarvabuddhatvaṃ sattvasauritvameva ca /",
  "XXbsa048_u:56": "svādhidaivadya(ta)yogena tasmādātmaiva sādhayet // iti /",
  "XXbsa048_u:57": "mantranidhyaptikāyena vācā manasi coditaḥ /",
  "XXbsa048_u:58": "sādhayet pravarāṃ siddhiṃ manaḥsantoṣaṇapriyām //",
  "XXbsa048_u:59": "kāyavivekamelāvaṇasaṃśayaparicchedo dvitīyaḥ // 2 //",
  "XXbsa048_u:60": "3. tṛtīyaḥ paricchedaḥ",
  "XXbsa048_u:61": "pañcavarṇaṃ mahāratnaṃ sarṣapasthūlamātrakam /",
  "XXbsa048_u:62": "nāsikāgre prayatnena bhāvayedyogataḥ sadā // iti /",
  "XXbsa048_u:63": "pañcajñānamayaṃ śvāsaṃ pañcabhūtasvabhāvakam //",
  "XXbsa048_u:64": "niścārya padmanāsāgre piṇḍarūpeṇa kalpayet /",
  "XXbsa048_u:65": "pañcavarṇaṃ mahāratnaṃ prāṇāyāmamiti smṛtam //",
  "XXbsa048_u:66": "atha bhagavān mahāvajrī vajrajāpārthabhāṣiṇam /",
  "XXbsa048_u:67": "pratyuvāca tataḥ samyakpraṇamyaikaṃ jagadruruḥ //",
  "XXbsa048_u:68": "laukikāgamamevedaṃ bodhicittaṃ prakāśitam //",
  "XXbsa048_u:69": "lokottaraṃ kathaṃ nāma pratipatsyantyāgāmikāḥ //",
  "XXbsa048_u:70": "sarvadṛṣṭiprahāṇāya tvayā dharmo hi deśitaḥ /",
  "XXbsa048_u:71": "tat kathaṃ bodhicittaṃ tu sā dṛṣṭiḥ sudṛḍhīkṛtā //",
  "XXbsa048_u:72": "uktamarthaṃ na budhyanti saṃdhyāyavākyamohitāḥ /",
  "XXbsa048_u:73": "yathārutaṃ te gṛṇhanti tathaiva hi pacanti ca //",
  "XXbsa048_u:74": "atha bhagavān viśvo vajrapāṇiṃ vadet tataḥ /",
  "XXbsa048_u:75": "sādhu sādhu ca guhyeśa vyākṛtāgāmikā tvayā //",
  "XXbsa048_u:76": "bodhicittaṃ bhavedvāyurambare ca vyavasthitaḥ /",
  "XXbsa048_u:77": "prāṇabhūtaśca sattvānāṃ pañcātmā daśasaṃjñakaḥ //",
  "XXbsa048_u:78": "pratītyadvādaśāṅgākhyaṃ svabhāvāt tritayaṃ bhavet /",
  "XXbsa048_u:79": "sarvendriyapradhānedaṃ vāyvākhyaṃ bodhicittakam //",
  "XXbsa048_u:80": "avyaktaṃ sūkṣmamityevaṃ vyaktamityucyate sadā /",
  "XXbsa048_u:81": "tadāśrayāttu karmāṇi kuryādviṣayādikaṃ janaḥ //",
  "XXbsa048_u:82": "śāntikaṃ pauṣṭikaṃ caiva vaśyābhicārakaṃ tathā /",
  "XXbsa048_u:83": "bodhicittātu tatsarvaṃ tritattvanilayāśrayā[t] //",
  "XXbsa048_u:84": "yāvaccālokasaṃketāḥ kalpitā vividhāstathā /",
  "XXbsa048_u:85": "bhavanti bodhicittāttu vikalpā vāyutaḥ sadā //",
  "XXbsa048_u:86": "sukhaduḥkhādiko dharmo bījādeva vidhīyate /",
  "XXbsa048_u:87": "bodhicittasvabhāvo 'sau skandhādyadvayakopamaḥ //",
  "XXbsa048_u:88": "prajñopāyaikayogena bodhicittaṃ jagad bhavet //",
  "XXbsa048_u:89": "svayaṃ samuccaretsvāmī dhyānādhyayanavarjitaḥ //",
  "XXbsa048_u:90": "divārātrivibhāgena candrasūryaprayogataḥ /",
  "XXbsa048_u:91": "niśvāso [hi] jagadvyāpī bodhicittaikamārutaḥ //",
  "XXbsa048_u:92": "śubhāśubhaphalaṃ tyaktvā bhavatyeva nabhopamaḥ // iti /",
  "XXbsa048_u:93": "prāṇāpānasamānākhyānudānavyānasaṃjñakān /",
  "XXbsa048_u:94": "nāgakūrmakṛkarāṃśca devadattadhanañjayān //",
  "XXbsa048_u:95": "kṛtvaitadātmano bimbaṃ strītattvaṃ nirmāya te punaḥ // iti /",
  "XXbsa048_u:96": "koṭākṣaḥ koṭavaḥ koṭāḥ koṭābhaśca koṭīrakaḥ /",
  "XXbsa048_u:97": "kolākṣaḥ kolāvaḥ kolaḥ kolābhaśca kalistathā //",
  "XXbsa048_u:98": "nāsikācchidrasaṃbhūtaḥ pañcabuddhakulasthitaḥ /",
  "XXbsa048_u:99": "pañcavāyurdhvasañcāro dehe carati nityaśaḥ //",
  "XXbsa048_u:100": "saṃvṛtighrāṇasañcārād dvārāttasya vinisṛtāḥ /",
  "XXbsa048_u:101": "vāmadakṣiṇadvandvāśca stabdhaścaite caturvidhāḥ //",
  "XXbsa048_u:102": "dakṣiṇāt prasaro dhāturhutabhuṅmaṇḍalañca vai /",
  "XXbsa048_u:103": "raktavarṇamidaṃ vaktraṃ padmanāthasya sañcaret //",
  "XXbsa048_u:104": "vāmācca prasaro dhāturvāyumaṇḍalaniḥsṛtaḥ /",
  "XXbsa048_u:105": "haritaḥ śyāmasaṃkāśaḥ karmanāthasya sañcaret //",
  "XXbsa048_u:106": "dvandvasya prasaro dhātuḥ kanakavarṇasya satribhaḥ /",
  "XXbsa048_u:107": "māhendramaṇḍalañcaiva ratnanāthasya sañcaret //",
  "XXbsa048_u:108": "stabdho na prasaro dhātuḥ kṣaṇādvāruṇamaṇḍalaḥ /",
  "XXbsa048_u:109": "śuddhasphaṭikasaṃkāśaṃ vajranāthasya sañcaret //",
  "XXbsa048_u:110": "sarvadhātuṃ samuddhṛtya hyādhārādheyadhāritaḥ /",
  "XXbsa048_u:111": "vairocanamahākāyo maraṇānte viniścaret //",
  "XXbsa048_u:112": "caturmaṇḍalametaddhi japennityaṃ samāhitaḥ /",
  "XXbsa048_u:113": "ahorātraṃ sadā jāpo mantriṇāṃ japasaṃkṣa(khya)yā //",
  "XXbsa048_u:114": "ekādirnavamadhye tu daśabhiryo na badhyate /",
  "XXbsa048_u:115": "tamabaddhaṃ vijānīyāt sa vetti paramaṃ padam //",
  "XXbsa048_u:116": "svaravyañjanavarṇāṃśca navasaṃkhyānuvartinaḥ /",
  "XXbsa048_u:117": "abaddhānyonyasaṃyogā yo vetti sa jagadruruḥ //",
  "XXbsa048_u:118": "yo buddhā(ddhvā)vāñcchayet siddhiṃ vimuktiphalasampadam /",
  "XXbsa048_u:119": "sa tadeva samāpnoti arūpo rūpavarjitam //",
  "XXbsa048_u:120": "bhūtāntena samāyuktaṃ kalādiṣoḍaśe sthitam /",
  "XXbsa048_u:121": "pañcapañcakasaṃyuktaṃ catusrayaniyojitam //",
  "XXbsa048_u:122": "sānusvāraṃ sadīrghaṃ ca guṇasaṃyogalopavat /",
  "XXbsa048_u:123": "hrasvaṃ samastavākyaṃ syānna cānekaṃ na caikakam //",
  "XXbsa048_u:124": "yakārārthena yatkiñcit kartavyaṃ siddhimicchatā /",
  "XXbsa048_u:125": "rephāditritayenaiva jagatkāryaṃ pravartate //",
  "XXbsa048_u:126": "ye varṇāḥ pṛṣṭhataḥ proktā abhimukhāśca ye punaḥ /",
  "XXbsa048_u:127": "strīpunnapuṃsakāste ca dhātvādiparikalpitāḥ //",
  "XXbsa048_u:128": "adha ūrdhvasamāyuktā jñātvā buddhyā niyojitāḥ /",
  "XXbsa048_u:129": "ṣaḍbhiruktaṃ catustrai(stryai)kānniḥsvabhāvaikabhāvajām //",
  "XXbsa048_u:130": "trā(tryā)dyādyarthe samāyoja(jya) tryadhvajñānaṃ tu jāyate /",
  "XXbsa048_u:131": "svapnendrajālava dvidhvā kuryājjagat tridhātuke //",
  "XXbsa048_u:132": "pratyāhāramidaṃ mantraṃ niḥsvabhāvasvabhāvajam /",
  "XXbsa048_u:133": "tataḥ pariṇataṃ rūpaṃ yad daivatopalambhakam //",
  "XXbsa048_u:134": "sāṃketikaṃ tritattvasthaṃ prakṛtijāpalakṣaṇam /",
  "XXbsa048_u:135": "anākhyeyamanuccāryaṃ bodhicittamidaṃ param //",
  "XXbsa048_u:136": "tadeva tritayaikaṃ syādanirgamamanāgamam /",
  "XXbsa048_u:137": "anirodhaḥ praśāntaśca śāśvatocchedavarjitam //",
  "XXbsa048_u:138": "trayadhvavidākṛtasaṃkalpamākāśābhedalakṣaṇam /",
  "XXbsa048_u:139": "pāramārthikamevedaṃ pratyātmavedyalakṣaṇam //",
  "XXbsa048_u:140": "sarvāsvapi kriyāścai(svai)va niṣadyādiṣu yogavit /",
  "XXbsa048_u:141": "anākhyeyamanuccāryaṃ tryadhvātītaṃ japet sadā //",
  "XXbsa048_u:142": "pāṇḍarādi japaḥ(pāḥ) proktāḥ pañcaviṃśacchatadvayam /",
  "XXbsa048_u:143": "caturbhirguṇitaṃ samyak caturyogaṃ śataṃ nava //",
  "XXbsa048_u:144": "navaśataṃ tu yad dṛṣṭaṃ caturviśatiparikramaiḥ /",
  "XXbsa048_u:145": "pratyutpādād bhavettatu dvyayutaṃ śataṣoḍaśam //",
  "XXbsa048_u:146": "taditthaṃ guhyasandhyāyāṃ sūkṣmayogaṃ prakāśitam /",
  "XXbsa048_u:147": "dhyānādhyayanavītaṃ tu tathāpi japa ucyate //",
  "XXbsa048_u:148": "akāraḥ sarvavarṇāgryo mahārthaḥ paramākṣaraḥ /",
  "XXbsa048_u:149": "mahāprāṇo hyanutpādo vāgudāhāravarjitaḥ /",
  "XXbsa048_u:150": "sarvābhilāpahetvagryaḥ sarvavāksuprabhāsvaraḥ // iti /",
  "XXbsa048_u:151": "jvalantaṃ dīpasadṛśaṃ hṛdi madhyamanāhatam /",
  "XXbsa048_u:152": "akṣaraṃ paramaṃ sūkṣmam akāraṃ paramaṃ prabhum // iti /",
  "XXbsa048_u:153": "dharmā ime śabdarutena vyākṛtā",
  "XXbsa048_u:154": "dharmaśca śabdaśca hi nātra labhyate /",
  "XXbsa048_u:155": "na caikatāṃ cāpyavatīrya dharmatām",
  "XXbsa048_u:156": "anuttarāṃ kṣāntivarāṃ spṛśiṣyate // iti /",
  "XXbsa048_u:157": "vāgvivekamelāvaṇasaṃśayaparicchedastṛtīyaḥ // 3 //",
  "XXbsa048_u:158": "4. caturthaḥ paricchedaḥ",
  "XXbsa048_u:159": "dūraṅgamekacaramaśarīraṃ guhāśayam /",
  "XXbsa048_u:160": "ye cittaṃ sanniveśayanti mucyante mārabandhanād // iti /",
  "XXbsa048_u:161": "pratītyotpadyate yadyadindriyairviṣayairmanaḥ //",
  "XXbsa048_u:162": "tanmanastvaśītikhyātasrakārastrāṇanārthataḥ // iti /",
  "XXbsa048_u:163": "saṃvittimātrakaṃ jñānamākāśavadalakṣaṇam /",
  "XXbsa048_u:164": "kintu tasya prabhedo 'sti sandhyārātridivātmanā //",
  "XXbsa048_u:165": "ālokālokabhāsau ca tathālokopalabdhakam /",
  "XXbsa048_u:166": "cittaṃ trividhamityuktamādhārastasya kathyate //",
  "XXbsa048_u:167": "vāyunā sūkṣmarūpeṇa jñānaṃ sanmiśratāṃ gatam //",
  "XXbsa048_u:168": "niḥsṛtyendriyamārgebhyo viṣayānavalambate //",
  "XXbsa048_u:169": "ābhāsena yadā yukto vāyurvāhanatāṃ gataḥ /",
  "XXbsa048_u:170": "tadā tatprakṛtiḥ sarvā astavyastā pravartate //",
  "XXbsa048_u:171": "yatra yatra sthito vāyustāṃ tāṃ prakṛtimudvaheta // iti /",
  "XXbsa048_u:172": "cittavivekasaṃśayamelāvaṇaparicchedaścaturthaḥ // 4 //",
  "XXbsa048_u:173": "5. pañcamaḥ paricchedaḥ",
  "XXbsa048_u:174": "payodharā yathā naike nānāsaṃsthānavarṇakāḥ /",
  "XXbsa048_u:175": "ubhdūtā gaganābhogāllayaṃ gacchanti tatra vai //",
  "XXbsa048_u:176": "evaṃprakṛtayaḥ sarvā ābhāsatrayahetukāḥ /",
  "XXbsa048_u:177": "nirviśya viṣayān kṛtsnān praviśanti prabhāsvaram //",
  "XXbsa048_u:178": "evaṃsvabhāvā vijñānādajñāna[paṭalāvṛtāḥ /",
  "XXbsa048_u:179": "kṛtvā śubhāśubhaṃ karma bhra]manti gatipañcake //",
  "XXbsa048_u:180": "ānantaryādikaṃ kṛtvā narakeṣu vipacyate /",
  "XXbsa048_u:181": "śubhaṃ dānādikaṃ kṛtvā [svargādiṣu mahīyate //",
  "XXbsa048_u:182": "ānantajanmasāhasraṃ] prāpya caivaṃ punaḥ punaḥ /",
  "XXbsa048_u:183": "pūrvakarmavipāko 'yamiti śocati mohataḥ //",
  "XXbsa048_u:184": "prakṛtyābhā[savidhinā kleśavantaśca ye janāḥ /",
  "XXbsa048_u:185": "etajjñātvā vimu]cyanti jñānino bhavapañjarāt // iti /",
  "XXbsa048_u:186": "yadi śūnyamidaṃ sarvamanutpannasvabhāvakam /",
  "XXbsa048_u:187": "kathaṃ karmātra saṃsāre sukhaduḥkhaṃ pravartate //",
  "XXbsa048_u:188": "ahaṅkāramamakāraistathārāgādibhirmalaiḥ /",
  "XXbsa048_u:189": "kalpitaṃ paratantreṇa duḥkhāt kliśyanti bāliśāḥ //",
  "XXbsa048_u:190": "cittamātramidaṃ sarvaṃ māyākārasamutthitam /",
  "XXbsa048_u:191": "tataḥ śubhāśubhaṃ karma tato janma śubhāśubham // iti /",
  "XXbsa048_u:192": "karmāntavibhāgamelāvaṇasaṃśayaparicchedaḥ pañcamaḥ // 5 //",
  "XXbsa048_u:193": "6. ṣaṣṭhaḥ paricchedaḥ /",
  "XXbsa048_u:194": "indrāyudhanibhaṃ kāyaṃ labhate tattvabhāvanāt // iti /",
  "XXbsa048_u:195": "skandhe ca dhātvāyatanendriyādau jñānadvaye tatra samaṃ sthite 'smin /",
  "XXbsa048_u:196": "śūnye mahattve sati yaḥ prasuptaḥ svapnaṃ prapaśyet khalu vātavegāt //",
  "XXbsa048_u:197": "svapne prabuddhe ca na cānyabhedaḥ saṃkalpayet svapnaphalābhilāṣī /",
  "XXbsa048_u:198": "rātriṃdivā svapnamupaiti jantuṃ mahīghanatve sucireṇa suptaḥ //",
  "XXbsa048_u:199": "phale na pakve kṛtakarmaṇaśca vāyuḥ punaḥ krāmati janmanīha /",
  "XXbsa048_u:200": "pakvaṃ phalaṃ syād gata eva vāyuḥ paratra śīghraṃ maraṇaṃ hi loke //",
  "XXbsa048_u:201": "yatha jinendro daśadigvyavasthito majjāsthimāṃsaṃ na ca tasya kāye /",
  "XXbsa048_u:202": "praveśayet sattvahitāya dhātunirmāṇakalpena karoti kṛtyam //",
  "XXbsa048_u:203": "evaṃ kramājjāgrati suptacittaḥ phalaṃ ca vāñchet savikalpajālam /",
  "XXbsa048_u:204": "svapnopamāste khalu sarvadharmā mṛṣāmṛṣāścāpyubhayorabhāvaḥ // iti /",
  "XXbsa048_u:205": "saṃvṛtisatyamelāvaṇasaṃśayaparicchedaḥ ṣaṣṭhaḥ // 6 //",
  "XXbsa048_u:206": "7. saptamaḥ paricchedaḥ",
  "XXbsa048_u:207": "yathā dīpo ghaṭāntaḥstho bāhyo naivāvabhāsate /",
  "XXbsa048_u:208": "bhinne tu taddhaṭe paścād dīpajvālābhibhāsate //",
  "XXbsa048_u:209": "svakāya eva hi ghaṭo dīpa eva hi tattvakam /",
  "XXbsa048_u:210": "guruvaktreṇa saṃbhinne buddhajñānaṃ sphuṭaṃ bhavet //",
  "XXbsa048_u:211": "gaganaṃ gaganobhdūtamākāśākāśaṃ sa paśyati /",
  "XXbsa048_u:212": "tathaiva hi gurorvaktrātprayogo 'yaṃ pradarśitaḥ // iti /",
  "XXbsa048_u:213": "dharmā ime śabdarutena vyākṛtā dharmaśca śabdaśca hi nātra labhyate /",
  "XXbsa048_u:214": "na caikatāṃ cāpyavatīrya dharmatāmanuttarāṃ kṣāntivarāṃ spṛśiṣyate // iti /",
  "XXbsa048_u:215": "namaste varadavajrāgrya bhūtakoṭe namo 'stu te /",
  "XXbsa048_u:216": "namaste śūnyatāgarbha buddhabodhe namo 'stu te //",
  "XXbsa048_u:217": "dadasva me mahācārya abhisaṃbodhidarśanam /",
  "XXbsa048_u:218": "sarvabuddhamahājñānaṃ sarvaśūnyamanuttaram //",
  "XXbsa048_u:219": "dadasva me mahāsattva svānubhāvaikalakṣaṇam /",
  "XXbsa048_u:220": "karmajanmavinirmuktamihaiva bodhimavāpnuyām //",
  "XXbsa048_u:221": "ta(tva)tpādapaṅkajaṃ muktvā nāstyanyaccharaṇaṃ prabho /",
  "XXbsa048_u:222": "tasmātprasīda buddhāgrya jagadvīra mahāmune //",
  "XXbsa048_u:223": "evaṃ stutvā tu taṃ divyamadhyeṣaṇavidhiṃ param /",
  "XXbsa048_u:224": "śiṣye kāruṇyamutpādya guruḥ śrīmān guṇodadhiḥ //",
  "XXbsa048_u:225": "prasannavadano bhūtvā sānukampaḥ praharṣitaḥ /",
  "XXbsa048_u:226": "śrāvayetsamayaṃ divyaṃ yogatantrobhdavaṃ param //",
  "XXbsa048_u:227": "tataḥ samāhitācāryo bodhicittaṃ niṣpādayet /",
  "XXbsa048_u:228": "kalaśe vātha śaṃkhe vā bodhicittaṃ nidhāya ca //",
  "XXbsa048_u:229": "tatastaṃ śiṣyamāhūya sarvabuddhairadhiṣṭhitam /",
  "XXbsa048_u:230": "arpayetsamayaṃ tasya jinamudrāsamanvitam //",
  "XXbsa048_u:231": "abhiṣeko hi dātavyo dvitīyenaiva vajriṇā /",
  "XXbsa048_u:232": "māṅgalyovduṣṭaśabdena vāditravividhasvanaiḥ //",
  "XXbsa048_u:233": "traidhātukābhiṣekeṇa śiṣyaḥ kṛtanatāñjaliḥ /",
  "XXbsa048_u:234": "anujñātaṃ tatastasya dadyāttatrapracoditaḥ //",
  "XXbsa048_u:235": "mālāsalilasaṃbuddhavajraghaṇṭātha darpaṇam /",
  "XXbsa048_u:236": "nāmācāryamanujñāta abhiṣekakramo hyayam //",
  "XXbsa048_u:237": "tataḥ samarpayet tasya bāhyābhisaṃbodhilakṣaṇam /",
  "XXbsa048_u:238": "saṃpradāye yadāvāptaṃ guruparvakramāgatam // iti /",
  "XXbsa048_u:239": "toye nirmalake nadīsarasi vā binduśca yo līnakaḥ /",
  "XXbsa048_u:240": "śuddhaṃ tatkramaśo 'nubhedagaditaṃ yogī smarennityaśaḥ /",
  "XXbsa048_u:241": "ādarśe hyanilakṣayaḥ kramagatastadvanna saṃprekṣyate",
  "XXbsa048_u:242": "piṇḍagrāha iti kramo vidhimatāmevaṃ samutprekṣyate //",
  "XXbsa048_u:243": "sarvāṅgabhāvanātītaṃ kalpanākalpavarjitam /",
  "XXbsa048_u:244": "mātrābindusamātītaṃ etanmaṇḍalamuttamam //",
  "XXbsa048_u:245": "viśatī(ti) yaḥ sarvabhāvānāṃ rūpārūpeṣu nirmalam /",
  "XXbsa048_u:246": "bodhitaścoditaṃ cittaṃ maṇḍalaṃ maṇḍalākṛtim //",
  "XXbsa048_u:247": "astīti nāstīti ubhe 'pi antā śuddhī aśuddhīti ime 'pi antā /",
  "XXbsa048_u:248": "tasmādubhe antavivarjayitvā madhye 'pi sthānaṃ na karoti paṇḍitaḥ // iti /",
  "XXbsa048_u:249": "ākāśānantamityarthaṃ sarvabhūtamahālayam /",
  "XXbsa048_u:250": "vibhūtiḥ śrīvibho rājā sarvāśāparipūrakaḥ //",
  "XXbsa048_u:251": "aho buddha aho buddha aho dharmasya deśanā /",
  "XXbsa048_u:252": "śuddhatattvārthaśuddhārtha bodhicitta namo 'stu te //",
  "XXbsa048_u:253": "paramārthasatyamelāvaṇasaṃśayaparicchedaḥ saptamaḥ // 7 //",
  "XXbsa048_u:254": "8. aṣṭamaḥ paricchedaḥ",
  "XXbsa048_u:255": "sthūlaṃ śabdamayaṃ prāhuḥ sūkṣmaṃ cittāmayantathā /",
  "XXbsa048_u:256": "cittayā rahitaṃ yat tad yogināṃ paramaṃ padam // iti /",
  "XXbsa048_u:257": "svasaṃvedyaṃ tu tattattvaṃ vaktuṃ nānyasya pāryate /",
  "XXbsa048_u:258": "bhaktibhāvanayā gamyaṃ na gamyaṃ cānyathā nu tat //",
  "XXbsa048_u:259": "jñātvā tattvaṃ tataḥ kṛtvā bhaktibhāvamaharniśam /",
  "XXbsa048_u:260": "tasmin paramanirvāṇe pade śānte hyanuttare //",
  "XXbsa048_u:261": "tatastadbhaktisāmarthyād bhāvanābalanirmitam /",
  "XXbsa048_u:262": "tasminnutpadyate rūpaṃ kimapyānandajaṃ param //",
  "XXbsa048_u:263": "dhagityākārasaṃbhūtaṃ sphuratsaṃhārākārakam /",
  "XXbsa048_u:264": "bhūrbhuvaḥsvaridaṃ sarvaṃ dyotayat sacarācaram //",
  "XXbsa048_u:265": "bhāvanābalasāmarthyāt prajñopāyātmakaṃ śivam /",
  "XXbsa048_u:266": "sarvakleśavinirmuktaṃ sarvalakṣaṇabhūṣitam //",
  "XXbsa048_u:267": "śūnyatājñānasaṃbhūtaṃ nirdvandvaṃ paramaṃ śivam /",
  "XXbsa048_u:268": "sarvākāravaropetaṃ grāhyagrāhakavarjitam //",
  "XXbsa048_u:269": "jñānaṃ māyopamaṃ śuddhaṃ svacchaṃ prakṛtinirmalam /",
  "XXbsa048_u:270": "śabdagandharasātītaṃ tathā sparśavivarjitam //",
  "XXbsa048_u:271": "dṛśyate paramekena samādhau jñānacakṣuṣā /",
  "XXbsa048_u:272": "chāyāmāyopamaṃ divyaṃ divyasaṃsthānasayutam //",
  "XXbsa048_u:273": "sphurajjñānormimālābhirvividhānekavigraham /",
  "XXbsa048_u:274": "indrāyudhanibhaṃ kāyaṃ labhante tattvabhāvakāḥ //",
  "XXbsa048_u:275": "bhāvanāyogasāmarthyāt samayānāṃ ca pālanāt /",
  "XXbsa048_u:276": "īdṛśaṃ prāpyate rūpaṃ na vācyaṃ yajjinairapi //",
  "XXbsa048_u:277": "yatra kāyo na vākcittaṃ sthānaṃ yatsarvagaṃ param /",
  "XXbsa048_u:278": "saṃpradāyavaśāt tatra svasya rūpaṃ vibhāvyate //",
  "XXbsa048_u:279": "aho suvismayakaramaho śāntamatīndriyam /",
  "XXbsa048_u:280": "aho paramagambhīraṃ buddhatvaṃ padamuttamam // iti /",
  "XXbsa048_u:281": "aho vajra aho vajra aho vajrasya deśanā /",
  "XXbsa048_u:282": "yatra na kāyavākcittaṃ tatra rūpaṃ vibhāvyate // iti /",
  "XXbsa048_u:283": "bhaṭṭārakapādenāpyuktam-",
  "XXbsa048_u:284": "śauśīryaṃ nāsti te kāye māṃsāsthirudhiraṃ na ca /",
  "XXbsa048_u:285": "indrāyudhamivākāśe kāyaṃ darśitavānasi //",
  "XXbsa048_u:286": "nāmayo nāśuciḥ kāye kṣuttṛṣṇāsaṃbhavau na ca /",
  "XXbsa048_u:287": "tvayā lokānuvṛttyarthaṃ darśitā laukikī kriyā // iti /",
  "XXbsa048_u:288": "sarvakalpasamuccaye 'pyāha-",
  "XXbsa048_u:289": "gṛhītvā hṛdayaṃ śuddhaṃ vajradehavibhāvanā /",
  "XXbsa048_u:290": "dṛḍhaṃ sāramasauśīryaṃ vajrakāyaṃ sa labdhavān // iti /",
  "XXbsa048_u:291": "khasamā virajā vararūpadharā aśarīra alakṣaṇa prajñasutā /",
  "XXbsa048_u:292": "sugambhīraguṇodadhi kāruṇikā dada mūrdhni pāṇi mama apratimā // iti /",
  "XXbsa048_u:293": "apratiṣṭhitanirvāṇadhātumelāvaṇasaṃśayaparicchedo 'ṣṭamaḥ // 8 //",
  "XXbsa048_u:294": "9. navamaḥ paricchedaḥ",
  "XXbsa048_u:295": "phalena hetumāmudrya phalamāmudrya hetunā /",
  "XXbsa048_u:296": "vibhāvyamanyathāsiddhiṃ kalpakoṭirna jāyate // iti /",
  "XXbsa048_u:297": "vajrasattvo mahārājaścodanīyo muhurmuhuḥ // iti /",
  "XXbsa048_u:298": "pādaprasārikaṃ muktvā tyaktvā saṃsārapeṭakam /",
  "XXbsa048_u:299": "sādhayed vajrasattvāgraṃ nityamudyuktamānasaḥ //",
  "XXbsa048_u:300": "kaukṛtyastyānamiddhādīn parityajya prayatnataḥ /",
  "XXbsa048_u:301": "anyathā naiva siddhiḥ syāt kalpakoṭiśatairapi // iti /",
  "XXbsa048_u:302": "bhikṣubhāve sthitā ye 'tra ye tu tarkaratā narāḥ /",
  "XXbsa048_u:303": "vṛddhabhāve sthitā ye tu teṣāṃ tattvaṃ na deśayet // iti /",
  "XXbsa048_u:304": "upāyarahitaṃ jñānaṃ śikṣā cāpi hi deśitā /",
  "XXbsa048_u:305": "śrāvakāṇāṃ mahāvīra avatā(dhā)raya teṣu vai //",
  "XXbsa048_u:306": "mūlasūtre 'pyāha-",
  "XXbsa048_u:307": "daśakuśalān karmapathānicchanti jñānavarjitāḥ // iti /",
  "XXbsa048_u:308": "śrāvakayānamaśikṣatha bhikṣo bodhicariyata tatra carīye /",
  "XXbsa048_u:309": "bodhicarīṃ cara buddhaguṇeṣu eṣa nidānabhaviṣya svayaṃbhūḥ // iti /",
  "XXbsa048_u:310": "duṣkarairniyamaistīrvrairmūrtiḥ śuṣyati duḥkhitā /",
  "XXbsa048_u:311": "duḥkhād vikṣipyate cittaṃ vikṣepāt siddhiranyathā // iti /",
  "XXbsa048_u:312": "mūlasūtre 'pyāha-",
  "XXbsa048_u:313": "duṣkarairniyamaistīvraiḥ sevyamāno na siddhyati /",
  "XXbsa048_u:314": "sarvakāmopabhogaistu sevayaṃścāśu siddhyati // iti /",
  "XXbsa048_u:315": "rāgo dveṣaśca mohaśca traya ete viṣaṅgatāḥ /",
  "XXbsa048_u:316": "viṣatvamupayāntyeva viṣameṇa tu sevitā //",
  "XXbsa048_u:317": "amṛtatvaṃ punaryānti, amṛtena tu sevitāḥ // iti /",
  "XXbsa048_u:318": "badhyati yena jaḍaḥ parimucyati tena budhaḥ /",
  "XXbsa048_u:319": "bodhivibhāvanayā viparītamidaṃ sakalam //",
  "XXbsa048_u:320": "yena mūḍhāḥ prabadhyante śīryante rauravāntike /",
  "XXbsa048_u:321": "taireva hi vimucyante sukhaṃ prajñābalena tu // iti /",
  "XXbsa048_u:322": "athātaḥ saṃpravakṣyāmi sarvato viśvamuttamam /",
  "XXbsa048_u:323": "sarvabuddhasamāyogaḍākinījālasaṃvaram //",
  "XXbsa048_u:324": "rahasye parame ramye sarvātmani sadā sthitaḥ /",
  "XXbsa048_u:325": "sarvabuddhamayaḥ śrīmān vajrasattvodayaḥ sukhaḥ //",
  "XXbsa048_u:326": "tathāgatamahādivyaratnajālādyalaṅkṛtam /",
  "XXbsa048_u:327": "tato ghaṇṭāvasaṃsaktavitānavitatojjvale //",
  "XXbsa048_u:328": "vajragītiṃ ca pūjāṃ ca gītavādyairvikurvitam /",
  "XXbsa048_u:329": "puṣpadhūpādiyogena dīpagandhādibhistathā //",
  "XXbsa048_u:330": "prasādhayanti bhavane sodyānādiṣu vā punaḥ /",
  "XXbsa048_u:331": "sarvabuddhasamāyogaḍākinījālasaṃvaram //",
  "XXbsa048_u:332": "tatrāsanaṃ niveśyādau mṛdusaṃsparśajaṃ sukham /",
  "XXbsa048_u:333": "viśvapadmapaṭacchannaṃ sarvaśuddhāsanaṃ hi tat //",
  "XXbsa048_u:334": "sarvabuddhasamāyogaṃ yogeśvaravikurvitam /",
  "XXbsa048_u:335": "śrīvajrasattvarūpāstu vikurvanti hi yatra(tattu) vai //",
  "XXbsa048_u:336": "sarvadhātumayī(yo) vāpi jīvamūlamayastathā /",
  "XXbsa048_u:337": "svādhidaivatpratimukhaiḥ siddhimudrāpravartanam //",
  "XXbsa048_u:338": "niṣiktāṃ ghaṭitāṃ vāpi(bhi)saṃskṛtāṃ vā sucitritām /",
  "XXbsa048_u:339": "vicitrapratibimbāṃ ca cinhamudrāṃ prakalpayet //",
  "XXbsa048_u:340": "tadāsaneṣu prāṇasarvān yathāsthānaṃ hi vinyaset /",
  "XXbsa048_u:341": "caturasraṃ caturdvāraṃ catustoraṇamaṇḍitam /",
  "XXbsa048_u:342": "vajraratnapadmādi tu dvārapālena yojayet //",
  "XXbsa048_u:343": "svādhidaivatpratimukhaiḥ suprasādhitayoṣitam /",
  "XXbsa048_u:344": "svamudrācinhasubhagāṃ kalpayed gaṇamaṇḍalam //",
  "XXbsa048_u:345": "caturasraṃ caturdvāraṃ catustoraṇamaṇḍitam /",
  "XXbsa048_u:346": "catuḥsūtrasamāyuktamaṣṭastambhopaśobhitam //",
  "XXbsa048_u:347": "hārārddhahāraracitaṃ paṭṭasragdāmabhūṣitam /",
  "XXbsa048_u:348": "ghaṇṭāpatākasaṃśobhaṃ cāmarādivibhūṣitam //",
  "XXbsa048_u:349": "candrārddhavajrakoṇaṃ ca dvāraniryūhasandhiṣu /",
  "XXbsa048_u:350": "patvi(kṣi)ṇīkramaśīrṣādivicitra paṭamaṇḍitam //",
  "XXbsa048_u:351": "sarvadevyupabhogaistu sevyamānairyathāsukham /",
  "XXbsa048_u:352": "svādhidaivatayogena svamātmānaṃ prapūjayet //",
  "XXbsa048_u:353": "pūjyate 'nuyogena sarvayogasukhena tu /",
  "XXbsa048_u:354": "samāsvādayamānastvatiyogena siddhyati //",
  "XXbsa048_u:355": "anena sarvabuddhātmā rasāyanasukhena tu /",
  "XXbsa048_u:356": "siddhyet śrīvajrasattvāyuryauvanārogyasatsukham //",
  "XXbsa048_u:357": "sarvabuddhamahākāyaḥ sarvabuddhasarasvatī /",
  "XXbsa048_u:358": "sarvabuddhamahācittaḥ sarvabuddhamahāmahaḥ //",
  "XXbsa048_u:359": "sarvabuddhamahārājā sarvavajradharādhipaḥ /",
  "XXbsa048_u:360": "sarvalokeśvarapatiḥ sarvaratnādhipeśvaraḥ //",
  "XXbsa048_u:361": "tābhiḥ saṃramyamāṇastu yātyutpattiṃ tu gacchataḥ /",
  "XXbsa048_u:362": "sarvadevīmahāsidhya(ddha)ścakravartī prasidhyati // iti /",
  "XXbsa048_u:363": "pratyahaṃ pratimāsaṃ vā pratisaṃvatsaraṃ tathā /",
  "XXbsa048_u:364": "yathādhiṣṭhānato vāpi nāṭayed buddhasaṃvaram // iti /",
  "XXbsa048_u:365": "utthito vā niṣaṇṇo vā caṃkraman vā yathāsthitaḥ /",
  "XXbsa048_u:366": "praharṣan vā jalpan vā yatra tatra yathā tathā //",
  "XXbsa048_u:367": "yadyadindriyamārgatvaṃ yāyāttattatsvabhāvataḥ /",
  "XXbsa048_u:368": "asamāhitayogena sarvabuddhamayaṃ vahet //",
  "XXbsa048_u:369": "khasamaṃ khasamākāramaparyantasāgaropamam /",
  "XXbsa048_u:370": "rāgadharmanayo dveṣo vilāsaḥ krīḍāvistaraḥ //",
  "XXbsa048_u:371": "gṛhītaṃ vastumātraṃ ca śiṣyabodhanakāraṇāt /",
  "XXbsa048_u:372": "kati janmāntaraṃ vaktuṃ sahyate rāgadeśanā //",
  "XXbsa048_u:373": "śrīsarvabuddhasamāyogaḍākinījālasaṃvaranyāyena bodhisattvacaritadharmodayābhisaṃbodhiprapañcatāmelāvaṇa-saṃśayaparicchedo navamaḥ // 9 //",
  "XXbsa048_u:374": "10. daśamaḥ paricchedaḥ",
  "XXbsa048_u:375": "mahāṭavīpradeśeṣu phalapuṣpādyalaṅkṛte /",
  "XXbsa048_u:376": "parvate vijane sādhyamidaṃ dhyānasamuccayam //",
  "XXbsa048_u:377": "sevayan kāmaguṇān pañca jñānārthirāgiṇaḥ sadā // iti /",
  "XXbsa048_u:378": "kāyavākcittavajrāṇāṃ kāyavākcittabhāvanam /",
  "XXbsa048_u:379": "svarūpeṇaiva tatkāryaṃ laghusiddhiravāpyate //",
  "XXbsa048_u:380": "jaṭāmukuṭadharaṃ bimbaṃ sitavarṇanibhaṃ mahat /",
  "XXbsa048_u:381": "kārayed vidhivat sarvaṃ mantrasaṃvarasaṃvṛtam //",
  "XXbsa048_u:382": "ṣoḍaśābdikāṃ gṛhya sarvālaṅkārabhūṣitām /",
  "XXbsa048_u:383": "cāruvaktrāṃ viśālākṣīṃ prāpya vidyāvrataṃ caret //",
  "XXbsa048_u:384": "locanāpadasaṃbhogairvajracinhaistu bhāvayet /",
  "XXbsa048_u:385": "mudrāmantravidhānajñāṃ mantratantrasuśikṣitām //",
  "XXbsa048_u:386": "kuryāt tāthāgatīṃ bhāryāṃ buddhabodhipratiṣṭhitām /",
  "XXbsa048_u:387": "guhyapūjāṃ prakurvīta catuḥsattvāṃ(sandhyaṃ) mahāvratī //",
  "XXbsa048_u:388": "kandamūlaphalaiḥ sarvaṃ bhojyabhakṣyaṃ samārabhet /",
  "XXbsa048_u:389": "evaṃ buddho bhavecchīghraṃ mahājñānodadhiḥ prabhuḥ //",
  "XXbsa048_u:390": "ṣaṇmāsenaiva tatsarvaṃ prāpnuyānnātra saṃśayaḥ /",
  "XXbsa048_u:391": "vane bhikṣāṃ bhramennityaṃ sādhako dṛḍhaniścayaḥ //",
  "XXbsa048_u:392": "dadanti te bhaya[tra]stā bhojanaṃ divyamaṇḍitam /",
  "XXbsa048_u:393": "atikramanti yadi vajrātmā nāśaṃ vajrākṣaraṃ bhavet //",
  "XXbsa048_u:394": "surīṃ nāgīṃ mahāyakṣīmasurīṃ mānuṣīmapi /",
  "XXbsa048_u:395": "prāpya vidyāvrataṃ kāryaṃ trivajrajñānasevitam // iti /",
  "XXbsa048_u:396": "dvayendriyasamāpattyā vyāyāmavidhirantare /",
  "XXbsa048_u:397": "harṣacittaṃ muneḥ siddhau mahāsukhamiti smṛtam //",
  "XXbsa048_u:398": "niṣprapañcacaryāmelāvaṇasaṃśayaparicchedo daśamaḥ // 10 //",
  "XXbsa048_u:399": "11. ekādaśaḥ paricchedaḥ",
  "XXbsa048_u:400": "parvateṣu vivikteṣu nadīprasravaṇeṣu ca /",
  "XXbsa048_u:401": "śmaśānādiṣvapi kāryamidaṃ dhyānasamuccayam //",
  "XXbsa048_u:402": "prayogādīṃśca tattvena varjayet tattvavit sadā /",
  "XXbsa048_u:403": "vajrasattvadahaṃkāraṃ muktvā nānyatra kārayet //",
  "XXbsa048_u:404": "prayogā api na budhyante śuddhatattve vyavasthite /",
  "XXbsa048_u:405": "nairātmyapadayogena yāvattat pratyavekṣyate //",
  "XXbsa048_u:406": "niḥsvabhāvapadasthasya divyopāyayutasya ca /",
  "XXbsa048_u:407": "siddhyate nirvicāreṇa yatkiñcit kalpacoditam //",
  "XXbsa048_u:408": "bhāvanāyogasāmarthyāt svayamevopatiṣṭhate /",
  "XXbsa048_u:409": "tatsarvaṃ kṣaṇamātreṇa yatkiñcit siddhilakṣaṇam //",
  "XXbsa048_u:410": "rūpādyādhyātmikān dharmān paśyet vipaśyanocyate /",
  "XXbsa048_u:411": "akṣobhyādiyathāsaṃkhyaṃ kalpayet śamatho bhavet //",
  "XXbsa048_u:412": "anayorniḥsvabhāvatvāt tathatāśāntasaṃjñakam /",
  "XXbsa048_u:413": "tathatāmaṇḍale yogī sarvabuddhān praveśayed // iti /",
  "XXbsa048_u:414": "nirvāṇāgnimahāgore bhasmaśo 'pi na mucyate /",
  "XXbsa048_u:415": "na tatra vidyate tattvaṃ nendriyārthā na dhātavaḥ //",
  "XXbsa048_u:416": "nirvikalpo yadā viraḥ sthitiṃ hitvā tu laukikīm /",
  "XXbsa048_u:417": "ācaret sarvakāryāṇi buddhāḥ paśyanti tat tadā //",
  "XXbsa048_u:418": "bālavadvicaredyuktyā sarvataśchinnasaṃśayaḥ /",
  "XXbsa048_u:419": "nirābhogo yadā yogī tadā varṣanti saṃpadaḥ //",
  "XXbsa048_u:420": "aśeṣapāpayuktānāṃ mohāvaraṇasusthitāḥ /",
  "XXbsa048_u:421": "unmattavratayogena ṣaṇmāsādamoghasiddhayaḥ //",
  "XXbsa048_u:422": "sarvabuddhāna svayaṃ paśyet sarvakāmaiḥ prapūryate /",
  "XXbsa048_u:423": "na kṣīṇo na ca hānitvaṃ svecchāyurjāyate vapuḥ //",
  "XXbsa048_u:424": "anuttarāṃ parāṃ bodhiṃ saṃprāpnotyaprayatnataḥ /",
  "XXbsa048_u:425": "vinā yatnena sidhyanti sarvakāmasukhotsukāḥ //",
  "XXbsa048_u:426": "gambhīrapadaṃ nityaṃ gacchet tiṣṭhan niṣaṇṇakaḥ /",
  "XXbsa048_u:427": "prabhāsvarajñānakauśalyād yogināṃ lakṣaṇaṃ sadā //",
  "XXbsa048_u:428": "anena dhyānayogena cittaratnaṃ dṛḍhībhavet /",
  "XXbsa048_u:429": "adhiṣṭhānaṃ ca kurvanti buddhā bodhipratiṣṭhitāḥ //",
  "XXbsa048_u:430": "evaṃ bhūtvā niviṣṭastu bhāvayed bhāvatatparaḥ /",
  "XXbsa048_u:431": "yāvanna khidyate cittaṃ samāhitamanāḥ sudhīḥ //",
  "XXbsa048_u:432": "khinnastu paryaṭet paścādyathārucitaceṣṭitaḥ /",
  "XXbsa048_u:433": "bhāvayedvipulāṃ bodhimīṣadunmīlitekṣaṇaḥ //",
  "XXbsa048_u:434": "hasan jalpan kvacittiṣṭhan kvacitkuryāt pravartanam //",
  "XXbsa048_u:435": "bhāvanāsaktacittastu yathā khedo na jāyate //",
  "XXbsa048_u:436": "evaṃ samādhiyuktasya nirvikalpasya mantriṇaḥ /",
  "XXbsa048_u:437": "kālāvadhiṃ parityajya siddhyate 'nuttaraṃ padam // iti /",
  "XXbsa048_u:438": "sūkṣmarūpaṃ laghusparśaṃ vyāptisaṃprāptimeva ca /",
  "XXbsa048_u:439": "prakāśaṃ caiva sthairyaṃ ca vaśitvaṃ kāmāvasānikam // iti /",
  "XXbsa048_u:440": "bodhijñānāgrasaṃprāptaṃ paśyati buddhasuprabham /",
  "XXbsa048_u:441": "buddhasaṃbhogakāyaṃ ca ātmānaṃ laghu paśyati //",
  "XXbsa048_u:442": "traidhātukamahāsattvaiḥ pūjyamānaṃ sa paśyati /",
  "XXbsa048_u:443": "buddhaiśca bodhisattvaiśca pañcakāmaguṇairdhruvam //",
  "XXbsa048_u:444": "pūjitaṃ paśyate nityaṃ mahajñānā grasambhavam /",
  "XXbsa048_u:445": "vajrasattvaṃ mahābimbaṃ vajradharmaṃ mahāyaśam //",
  "XXbsa048_u:446": "svabimbaṃ paśyate svapne guhyavajramahāyaśāḥ /",
  "XXbsa048_u:447": "praṇamanti mahābuddhā bodhisattvāśca vajriṇaḥ //",
  "XXbsa048_u:448": "drakṣyanti īdṛśān svapnān kāyavākcittasiddhidān /",
  "XXbsa048_u:449": "sarvalaṅkārasampūrṇāṃ surakanyāṃ manoramām //",
  "XXbsa048_u:450": "dārakaṃ dārikāṃ paśyan sa siddhimadhigacchati /",
  "XXbsa048_u:451": "daśadiksarvabuddhānāṃ kṣetrasthaṃ paśyati dhruvam //",
  "XXbsa048_u:452": "dadanti hṛṣṭacittātmā dharmagañjaṃ manoramam /",
  "XXbsa048_u:453": "dharmacakragataṃ kāyaṃ sarvasattvaparivṛtam //",
  "XXbsa048_u:454": "paśyate yogasamaye dhyānavajrapratiṣṭhitaḥ // iti /",
  "XXbsa048_u:455": "nāpaneyamataḥ kiñcit prakṣeptavyaṃ na kiñcan /",
  "XXbsa048_u:456": "draṣṭavyaṃ bhūtato bhūtaṃ bhūtadarśī vimucyate // iti /",
  "XXbsa048_u:457": "uktaṃ ca suvarṇaprabhāsasūtre-",
  "XXbsa048_u:458": "na buddhaḥ parinirvāti na dharmaḥ parihīyate /",
  "XXbsa048_u:459": "sattvānāṃ paripākāya parinirvāṇaṃ nidarśayet //",
  "XXbsa048_u:460": "laṅkāvatārasūtre 'pyuktam-",
  "XXbsa048_u:461": "na hyatrotpadyate kiñcit pratyayairna nirudhyate /",
  "XXbsa048_u:462": "utpadyante nirudhyante pratyayā eva kalpitāḥ //",
  "XXbsa048_u:463": "ata uktam-",
  "XXbsa048_u:464": "yena yena hi bhāvena manaḥ saṃyujyate nṛṇām /",
  "XXbsa048_u:465": "tena tanmayatāṃ yāti viśvarūpo maṇiryathā //",
  "XXbsa048_u:466": "utpattiryat saṃvṛtisatyametad mṛtyurhi nāma paramārthasatyam /",
  "XXbsa048_u:467": "kramadvayasyāsya gurukṛpāto jñātā bhaved yaḥ sa bhaviṣyabuddhaḥ //",
  "XXbsa048_u:468": "satyadvayasyādvayavatpraveśo 'nucchedarūpo 'pyaviśeṣa eva /",
  "XXbsa048_u:469": "ekatvamevāstyanayordvayoriti vijñāyate yena vimukta eṣaḥ //",
  "XXbsa048_u:470": "girīndramūrdhnaḥ prapatet tu kaścid neccheccyutiṃ sa cyavate tathāpi /",
  "XXbsa048_u:471": "guruprasādādvihitopadeśād necchedvimuktiṃ sa tathāpi muktaḥ //",
  "XXbsa048_u:472": "matvā sattveṣu tattvādhigamakṣamatābhāvamālokya loke",
  "XXbsa048_u:473": "uttālābdhitaraṅgabhaṅgavikalāddīpasphuliṅgādiva /",
  "XXbsa048_u:474": "kiñcit kiñcidupetya saṃcitavatā grantho mayāyaṃ kṛto",
  "XXbsa048_u:475": "ye vai saṃvṛtisatyabhītasubhagāsteṣāmalāto bhavet //",
  "XXbsa048_u:476": "atyantaniṣprapañcacaryāmelāvaṇasaṃśayapariccheda ekādaśaḥ //",
  "XXbsa048_u:477": "samāpto 'yaṃ caryāmelāvaṇapradīpaḥ //",
  "XXbsa048_u:478": "kṛtirīyaṃ mahācārya-āryadevapādānām //"
}