{
  "XXbsa048_u:0_0": "Caryāmelāvaṇapradīpaḥ",
  "XXbsa048_u:1_0": "1. prathamaḥ paricchedaḥ",
  "XXbsa048_u:2_0": "om namaḥ śrīvajrasattvāya /",
  "XXbsa048_u:3_0": "namata khasamaniḥsvabhāvaśuddhaṃ namatāśeṣamanakṣaramavācyam /",
  "XXbsa048_u:3_1": "namatānāgatasarvagaṃ sugataṃ namata samastāśeṣasarvaśūnyam //",
  "XXbsa048_u:4_0": "“arthapratiśaraṇena bhavitavyaṃ śabdastu yathā tathā” iti /",
  "XXbsa048_u:5_0": "tantre-",
  "XXbsa048_u:5_1": "caturaśītisāhasre dharmaskandhe mahāmuneḥ /",
  "XXbsa048_u:5_2": "tattvaṃ vai ye na jānanti sarve te niṣphalāya vai // iti /",
  "XXbsa048_u:6_0": "ata āha-",
  "XXbsa048_u:6_1": "ādikarmikasandhānaṃ paramārthāvatāraṇe /",
  "XXbsa048_u:6_2": "upāyaścaiva saṃbuddhaiḥ sopānamiva nirmitaḥ // iti /",
  "XXbsa048_u:7_0": "prabodhanamelāvaṇasaṃśayaparicchedaḥ prathamaḥ // 1 //",
  "XXbsa048_u:8_0": "2. dvitīyaḥ paricchedaḥ",
  "XXbsa048_u:9_0": "pañcaskandhāḥ samāsena pañcabuddhāḥ prakīrtitāḥ /",
  "XXbsa048_u:9_1": "vajra-āyatanānyeva bodhisattvāgryamaṇḍalam //",
  "XXbsa048_u:9_2": "pṛthivī locanā khyātā abdhāturmāmakī smṛtā /",
  "XXbsa048_u:9_3": "pāṇḍarākhyā bhavettejastārā vāyuḥ prakīrtitā //",
  "XXbsa048_u:9_4": "rūpaśabdādibhirmantrī devatāṃ bhāvayet sadā //",
  "XXbsa048_u:10_0": "ityuktaṃ bhagavatā śrīguhyasamājamahāyogatantre /",
  "XXbsa048_u:11_0": "kulāḥ śatavidhāḥ proktāḥ saṃkṣepeṇa tu pañcadhā /",
  "XXbsa048_u:11_1": "punastrividhatāṃ yānti kāyavākcittabhedataḥ //",
  "XXbsa048_u:12_0": "“pañcaskandhāḥ samāsena pañcabuddhāḥ prakīrtitāḥ / “",
  "XXbsa048_u:13_0": "pañcahṛdayamāśritya pañcatanuvinirgatam /",
  "XXbsa048_u:13_1": "pañcavāyusamāyuktaṃ pañcakāmopabhogakṛta // iti /",
  "XXbsa048_u:14_0": "prakramaṇāt prāṇāyāmāccendriyadvāraistantubhiḥ /",
  "XXbsa048_u:14_1": "prakramate sadā kālaṃ prāṇa ityabhidhīyate //",
  "XXbsa048_u:14_2": "vātamūtrapurīṣāṇāṃ śukrādīnāṃ tathaiva ca /",
  "XXbsa048_u:14_3": "apanayanādapāno 'yaṃ yogibhirlakṣyate sadā //",
  "XXbsa048_u:14_4": "aśitaṃ khāditaṃ lehyaṃ peyaṃ coṣyañca sarvataḥ /",
  "XXbsa048_u:14_5": "samānayati yo nityaṃ samāna iti cocyate //",
  "XXbsa048_u:14_6": "ūrdhvagamāt saṃharaṇād bhakṣyabhojyādibhakṣaṇāt /",
  "XXbsa048_u:14_7": "udānakarmavijño 'yaṃ jñānena sahayogataḥ //",
  "XXbsa048_u:14_8": "vyāpanaṃ dhāraṇaṃ caiva gamanāgamanādikam /",
  "XXbsa048_u:14_9": "sarvasandhiṣu vyāptatvād vyāna ityabhidhīyate //",
  "XXbsa048_u:14_10": "pṛthivī locanā khyātā abdhāturmāmakī smṛtā /",
  "XXbsa048_u:14_11": "tejaḥ pāṇḍarā khyātā vāyustārā prakīrtitā //",
  "XXbsa048_u:14_12": "skandhaśca dhātuśca tathaivendriyaṃ ca pañcaiva pañcaiva kṛtaprabhedāḥ /",
  "XXbsa048_u:14_13": "tathāgatādhiṣṭhita ekaikaśaḥ saṃsārakarmāṇi kuto bhavanti //",
  "XXbsa048_u:14_14": "tathā sabāhyā viṣayāśca pañca ekaikaśaḥ pañcatathāgataiśca /",
  "XXbsa048_u:14_15": "svakasvakā nityamadhiṣṭhitāste jñānatrayaṃ pañcasamāśritaṃ ca //",
  "XXbsa048_u:14_16": "khadhātumadhyagataṃ cintenmaṇḍalaṃ sarvavajrajam /",
  "XXbsa048_u:14_17": "saṃhāraṃ ca prakurvīta yadīcchecchāntavajradhṛg // iti /",
  "XXbsa048_u:14_18": "pañcātmakaṃ pañcabhireva bhūtairdṛṣṭaṃ narāṇāṃ niyataṃ śarīram /",
  "XXbsa048_u:14_19": "tabhdāvabhāvairniyataṃ svacittaṃ prabhāvayantaḥ prabhavanti buddhāḥ // iti /",
  "XXbsa048_u:15_0": "khasamatantre 'pyāha-",
  "XXbsa048_u:15_1": "pañcabuddhātmaku sarvajago 'yaṃ paśyasu citraku nāṭaku divyam /",
  "XXbsa048_u:15_2": "yatra hi eku mahāsuhanāmā nṛtyati eku aneka rasena // iti /",
  "XXbsa048_u:16_0": "“saṃkṣepeṇa tu pañcadhā”",
  "XXbsa048_u:17_0": "kāyavākcittanidhyaptaiḥ svabhāvo nopalabhyate /",
  "XXbsa048_u:17_1": "mantramūrtiprayogeṇa na bodhirna ca bhāvanā //",
  "XXbsa048_u:17_2": "vicāryedaṃ samāsena kāyavākcittalakṣaṇam /",
  "XXbsa048_u:17_3": "bhāvayedvidhisaṃyogaṃ samādhiṃ mantrakalpitam // iti /",
  "XXbsa048_u:17_4": "na yogaḥ pratibimbeṣu niṣiktādiṣu jāyate /",
  "XXbsa048_u:17_5": "bodhicittamahāyogayoginastena devatāḥ //",
  "XXbsa048_u:17_6": "ātmā vai sarvabuddhatvaṃ sattvasauritvameva ca /",
  "XXbsa048_u:17_7": "svādhidaivadya(ta)yogena tasmādātmaiva sādhayet // iti /",
  "XXbsa048_u:17_8": "mantranidhyaptikāyena vācā manasi coditaḥ /",
  "XXbsa048_u:17_9": "sādhayet pravarāṃ siddhiṃ manaḥsantoṣaṇapriyām //",
  "XXbsa048_u:18_0": "kāyavivekamelāvaṇasaṃśayaparicchedo dvitīyaḥ // 2 //",
  "XXbsa048_u:19_0": "3. tṛtīyaḥ paricchedaḥ",
  "XXbsa048_u:20_0": "pañcavarṇaṃ mahāratnaṃ sarṣapasthūlamātrakam /",
  "XXbsa048_u:20_1": "nāsikāgre prayatnena bhāvayedyogataḥ sadā // iti /",
  "XXbsa048_u:20_2": "pañcajñānamayaṃ śvāsaṃ pañcabhūtasvabhāvakam //",
  "XXbsa048_u:20_3": "niścārya padmanāsāgre piṇḍarūpeṇa kalpayet /",
  "XXbsa048_u:20_4": "pañcavarṇaṃ mahāratnaṃ prāṇāyāmamiti smṛtam //",
  "XXbsa048_u:20_5": "atha bhagavān mahāvajrī vajrajāpārthabhāṣiṇam /",
  "XXbsa048_u:20_6": "pratyuvāca tataḥ samyakpraṇamyaikaṃ jagadruruḥ //",
  "XXbsa048_u:20_7": "laukikāgamamevedaṃ bodhicittaṃ prakāśitam //",
  "XXbsa048_u:20_8": "lokottaraṃ kathaṃ nāma pratipatsyantyāgāmikāḥ //",
  "XXbsa048_u:20_9": "sarvadṛṣṭiprahāṇāya tvayā dharmo hi deśitaḥ /",
  "XXbsa048_u:20_10": "tat kathaṃ bodhicittaṃ tu sā dṛṣṭiḥ sudṛḍhīkṛtā //",
  "XXbsa048_u:20_11": "uktamarthaṃ na budhyanti saṃdhyāyavākyamohitāḥ /",
  "XXbsa048_u:20_12": "yathārutaṃ te gṛṇhanti tathaiva hi pacanti ca //",
  "XXbsa048_u:20_13": "atha bhagavān viśvo vajrapāṇiṃ vadet tataḥ /",
  "XXbsa048_u:20_14": "sādhu sādhu ca guhyeśa vyākṛtāgāmikā tvayā //",
  "XXbsa048_u:20_15": "bodhicittaṃ bhavedvāyurambare ca vyavasthitaḥ /",
  "XXbsa048_u:20_16": "prāṇabhūtaśca sattvānāṃ pañcātmā daśasaṃjñakaḥ //",
  "XXbsa048_u:20_17": "pratītyadvādaśāṅgākhyaṃ svabhāvāt tritayaṃ bhavet /",
  "XXbsa048_u:20_18": "sarvendriyapradhānedaṃ vāyvākhyaṃ bodhicittakam //",
  "XXbsa048_u:20_19": "avyaktaṃ sūkṣmamityevaṃ vyaktamityucyate sadā /",
  "XXbsa048_u:20_20": "tadāśrayāttu karmāṇi kuryādviṣayādikaṃ janaḥ //",
  "XXbsa048_u:20_21": "śāntikaṃ pauṣṭikaṃ caiva vaśyābhicārakaṃ tathā /",
  "XXbsa048_u:20_22": "bodhicittātu tatsarvaṃ tritattvanilayāśrayā[t] //",
  "XXbsa048_u:20_23": "yāvaccālokasaṃketāḥ kalpitā vividhāstathā /",
  "XXbsa048_u:20_24": "bhavanti bodhicittāttu vikalpā vāyutaḥ sadā //",
  "XXbsa048_u:20_25": "sukhaduḥkhādiko dharmo bījādeva vidhīyate /",
  "XXbsa048_u:20_26": "bodhicittasvabhāvo 'sau skandhādyadvayakopamaḥ //",
  "XXbsa048_u:20_27": "prajñopāyaikayogena bodhicittaṃ jagad bhavet //",
  "XXbsa048_u:20_28": "svayaṃ samuccaretsvāmī dhyānādhyayanavarjitaḥ //",
  "XXbsa048_u:20_29": "divārātrivibhāgena candrasūryaprayogataḥ /",
  "XXbsa048_u:20_30": "niśvāso [hi] jagadvyāpī bodhicittaikamārutaḥ //",
  "XXbsa048_u:20_31": "śubhāśubhaphalaṃ tyaktvā bhavatyeva nabhopamaḥ // iti /",
  "XXbsa048_u:20_32": "prāṇāpānasamānākhyānudānavyānasaṃjñakān /",
  "XXbsa048_u:20_33": "nāgakūrmakṛkarāṃśca devadattadhanañjayān //",
  "XXbsa048_u:20_34": "kṛtvaitadātmano bimbaṃ strītattvaṃ nirmāya te punaḥ // iti /",
  "XXbsa048_u:20_35": "koṭākṣaḥ koṭavaḥ koṭāḥ koṭābhaśca koṭīrakaḥ /",
  "XXbsa048_u:20_36": "kolākṣaḥ kolāvaḥ kolaḥ kolābhaśca kalistathā //",
  "XXbsa048_u:20_37": "nāsikācchidrasaṃbhūtaḥ pañcabuddhakulasthitaḥ /",
  "XXbsa048_u:20_38": "pañcavāyurdhvasañcāro dehe carati nityaśaḥ //",
  "XXbsa048_u:20_39": "saṃvṛtighrāṇasañcārād dvārāttasya vinisṛtāḥ /",
  "XXbsa048_u:20_40": "vāmadakṣiṇadvandvāśca stabdhaścaite caturvidhāḥ //",
  "XXbsa048_u:20_41": "dakṣiṇāt prasaro dhāturhutabhuṅmaṇḍalañca vai /",
  "XXbsa048_u:20_42": "raktavarṇamidaṃ vaktraṃ padmanāthasya sañcaret //",
  "XXbsa048_u:20_43": "vāmācca prasaro dhāturvāyumaṇḍalaniḥsṛtaḥ /",
  "XXbsa048_u:20_44": "haritaḥ śyāmasaṃkāśaḥ karmanāthasya sañcaret //",
  "XXbsa048_u:20_45": "dvandvasya prasaro dhātuḥ kanakavarṇasya satribhaḥ /",
  "XXbsa048_u:20_46": "māhendramaṇḍalañcaiva ratnanāthasya sañcaret //",
  "XXbsa048_u:20_47": "stabdho na prasaro dhātuḥ kṣaṇādvāruṇamaṇḍalaḥ /",
  "XXbsa048_u:20_48": "śuddhasphaṭikasaṃkāśaṃ vajranāthasya sañcaret //",
  "XXbsa048_u:20_49": "sarvadhātuṃ samuddhṛtya hyādhārādheyadhāritaḥ /",
  "XXbsa048_u:20_50": "vairocanamahākāyo maraṇānte viniścaret //",
  "XXbsa048_u:20_51": "caturmaṇḍalametaddhi japennityaṃ samāhitaḥ /",
  "XXbsa048_u:20_52": "ahorātraṃ sadā jāpo mantriṇāṃ japasaṃkṣa(khya)yā //",
  "XXbsa048_u:20_53": "ekādirnavamadhye tu daśabhiryo na badhyate /",
  "XXbsa048_u:20_54": "tamabaddhaṃ vijānīyāt sa vetti paramaṃ padam //",
  "XXbsa048_u:20_55": "svaravyañjanavarṇāṃśca navasaṃkhyānuvartinaḥ /",
  "XXbsa048_u:20_56": "abaddhānyonyasaṃyogā yo vetti sa jagadruruḥ //",
  "XXbsa048_u:20_57": "yo buddhā(ddhvā)vāñcchayet siddhiṃ vimuktiphalasampadam /",
  "XXbsa048_u:20_58": "sa tadeva samāpnoti arūpo rūpavarjitam //",
  "XXbsa048_u:20_59": "bhūtāntena samāyuktaṃ kalādiṣoḍaśe sthitam /",
  "XXbsa048_u:20_60": "pañcapañcakasaṃyuktaṃ catusrayaniyojitam //",
  "XXbsa048_u:20_61": "sānusvāraṃ sadīrghaṃ ca guṇasaṃyogalopavat /",
  "XXbsa048_u:20_62": "hrasvaṃ samastavākyaṃ syānna cānekaṃ na caikakam //",
  "XXbsa048_u:20_63": "yakārārthena yatkiñcit kartavyaṃ siddhimicchatā /",
  "XXbsa048_u:20_64": "rephāditritayenaiva jagatkāryaṃ pravartate //",
  "XXbsa048_u:20_65": "ye varṇāḥ pṛṣṭhataḥ proktā abhimukhāśca ye punaḥ /",
  "XXbsa048_u:20_66": "strīpunnapuṃsakāste ca dhātvādiparikalpitāḥ //",
  "XXbsa048_u:20_67": "adha ūrdhvasamāyuktā jñātvā buddhyā niyojitāḥ /",
  "XXbsa048_u:20_68": "ṣaḍbhiruktaṃ catustrai(stryai)kānniḥsvabhāvaikabhāvajām //",
  "XXbsa048_u:20_69": "trā(tryā)dyādyarthe samāyoja(jya) tryadhvajñānaṃ tu jāyate /",
  "XXbsa048_u:20_70": "svapnendrajālava dvidhvā kuryājjagat tridhātuke //",
  "XXbsa048_u:20_71": "pratyāhāramidaṃ mantraṃ niḥsvabhāvasvabhāvajam /",
  "XXbsa048_u:20_72": "tataḥ pariṇataṃ rūpaṃ yad daivatopalambhakam //",
  "XXbsa048_u:20_73": "sāṃketikaṃ tritattvasthaṃ prakṛtijāpalakṣaṇam /",
  "XXbsa048_u:20_74": "anākhyeyamanuccāryaṃ bodhicittamidaṃ param //",
  "XXbsa048_u:20_75": "tadeva tritayaikaṃ syādanirgamamanāgamam /",
  "XXbsa048_u:20_76": "anirodhaḥ praśāntaśca śāśvatocchedavarjitam //",
  "XXbsa048_u:20_77": "trayadhvavidākṛtasaṃkalpamākāśābhedalakṣaṇam /",
  "XXbsa048_u:20_78": "pāramārthikamevedaṃ pratyātmavedyalakṣaṇam //",
  "XXbsa048_u:20_79": "sarvāsvapi kriyāścai(svai)va niṣadyādiṣu yogavit /",
  "XXbsa048_u:20_80": "anākhyeyamanuccāryaṃ tryadhvātītaṃ japet sadā //",
  "XXbsa048_u:20_81": "pāṇḍarādi japaḥ(pāḥ) proktāḥ pañcaviṃśacchatadvayam /",
  "XXbsa048_u:20_82": "caturbhirguṇitaṃ samyak caturyogaṃ śataṃ nava //",
  "XXbsa048_u:20_83": "navaśataṃ tu yad dṛṣṭaṃ caturviśatiparikramaiḥ /",
  "XXbsa048_u:20_84": "pratyutpādād bhavettatu dvyayutaṃ śataṣoḍaśam //",
  "XXbsa048_u:20_85": "taditthaṃ guhyasandhyāyāṃ sūkṣmayogaṃ prakāśitam /",
  "XXbsa048_u:20_86": "dhyānādhyayanavītaṃ tu tathāpi japa ucyate //",
  "XXbsa048_u:20_87": "akāraḥ sarvavarṇāgryo mahārthaḥ paramākṣaraḥ /",
  "XXbsa048_u:20_88": "mahāprāṇo hyanutpādo vāgudāhāravarjitaḥ /",
  "XXbsa048_u:20_89": "sarvābhilāpahetvagryaḥ sarvavāksuprabhāsvaraḥ // iti /",
  "XXbsa048_u:20_90": "jvalantaṃ dīpasadṛśaṃ hṛdi madhyamanāhatam /",
  "XXbsa048_u:20_91": "akṣaraṃ paramaṃ sūkṣmam akāraṃ paramaṃ prabhum // iti /",
  "XXbsa048_u:20_92": "dharmā ime śabdarutena vyākṛtā",
  "XXbsa048_u:20_93": "dharmaśca śabdaśca hi nātra labhyate /",
  "XXbsa048_u:20_94": "na caikatāṃ cāpyavatīrya dharmatām",
  "XXbsa048_u:20_95": "anuttarāṃ kṣāntivarāṃ spṛśiṣyate // iti /",
  "XXbsa048_u:21_0": "vāgvivekamelāvaṇasaṃśayaparicchedastṛtīyaḥ // 3 //",
  "XXbsa048_u:22_0": "4. caturthaḥ paricchedaḥ",
  "XXbsa048_u:23_0": "dūraṅgamekacaramaśarīraṃ guhāśayam /",
  "XXbsa048_u:23_1": "ye cittaṃ sanniveśayanti mucyante mārabandhanād // iti /",
  "XXbsa048_u:23_2": "pratītyotpadyate yadyadindriyairviṣayairmanaḥ //",
  "XXbsa048_u:23_3": "tanmanastvaśītikhyātasrakārastrāṇanārthataḥ // iti /",
  "XXbsa048_u:24_0": "saṃvittimātrakaṃ jñānamākāśavadalakṣaṇam /",
  "XXbsa048_u:24_1": "kintu tasya prabhedo 'sti sandhyārātridivātmanā //",
  "XXbsa048_u:24_2": "ālokālokabhāsau ca tathālokopalabdhakam /",
  "XXbsa048_u:24_3": "cittaṃ trividhamityuktamādhārastasya kathyate //",
  "XXbsa048_u:24_4": "vāyunā sūkṣmarūpeṇa jñānaṃ sanmiśratāṃ gatam //",
  "XXbsa048_u:24_5": "niḥsṛtyendriyamārgebhyo viṣayānavalambate //",
  "XXbsa048_u:24_6": "ābhāsena yadā yukto vāyurvāhanatāṃ gataḥ /",
  "XXbsa048_u:24_7": "tadā tatprakṛtiḥ sarvā astavyastā pravartate //",
  "XXbsa048_u:24_8": "yatra yatra sthito vāyustāṃ tāṃ prakṛtimudvaheta // iti /",
  "XXbsa048_u:25_0": "cittavivekasaṃśayamelāvaṇaparicchedaścaturthaḥ // 4 //",
  "XXbsa048_u:26_0": "5. pañcamaḥ paricchedaḥ",
  "XXbsa048_u:27_0": "payodharā yathā naike nānāsaṃsthānavarṇakāḥ /",
  "XXbsa048_u:27_1": "ubhdūtā gaganābhogāllayaṃ gacchanti tatra vai //",
  "XXbsa048_u:27_2": "evaṃprakṛtayaḥ sarvā ābhāsatrayahetukāḥ /",
  "XXbsa048_u:27_3": "nirviśya viṣayān kṛtsnān praviśanti prabhāsvaram //",
  "XXbsa048_u:27_4": "evaṃsvabhāvā vijñānādajñāna[paṭalāvṛtāḥ /",
  "XXbsa048_u:27_5": "kṛtvā śubhāśubhaṃ karma bhra]manti gatipañcake //",
  "XXbsa048_u:27_6": "ānantaryādikaṃ kṛtvā narakeṣu vipacyate /",
  "XXbsa048_u:27_7": "śubhaṃ dānādikaṃ kṛtvā [svargādiṣu mahīyate //",
  "XXbsa048_u:27_8": "ānantajanmasāhasraṃ] prāpya caivaṃ punaḥ punaḥ /",
  "XXbsa048_u:27_9": "pūrvakarmavipāko 'yamiti śocati mohataḥ //",
  "XXbsa048_u:27_10": "prakṛtyābhā[savidhinā kleśavantaśca ye janāḥ /",
  "XXbsa048_u:27_11": "etajjñātvā vimu]cyanti jñānino bhavapañjarāt // iti /",
  "XXbsa048_u:27_12": "yadi śūnyamidaṃ sarvamanutpannasvabhāvakam /",
  "XXbsa048_u:27_13": "kathaṃ karmātra saṃsāre sukhaduḥkhaṃ pravartate //",
  "XXbsa048_u:27_14": "ahaṅkāramamakāraistathārāgādibhirmalaiḥ /",
  "XXbsa048_u:27_15": "kalpitaṃ paratantreṇa duḥkhāt kliśyanti bāliśāḥ //",
  "XXbsa048_u:27_16": "cittamātramidaṃ sarvaṃ māyākārasamutthitam /",
  "XXbsa048_u:27_17": "tataḥ śubhāśubhaṃ karma tato janma śubhāśubham // iti /",
  "XXbsa048_u:28_0": "karmāntavibhāgamelāvaṇasaṃśayaparicchedaḥ pañcamaḥ // 5 //",
  "XXbsa048_u:29_0": "6. ṣaṣṭhaḥ paricchedaḥ /",
  "XXbsa048_u:30_0": "indrāyudhanibhaṃ kāyaṃ labhate tattvabhāvanāt // iti /",
  "XXbsa048_u:31_0": "skandhe ca dhātvāyatanendriyādau jñānadvaye tatra samaṃ sthite 'smin /",
  "XXbsa048_u:31_1": "śūnye mahattve sati yaḥ prasuptaḥ svapnaṃ prapaśyet khalu vātavegāt //",
  "XXbsa048_u:31_2": "svapne prabuddhe ca na cānyabhedaḥ saṃkalpayet svapnaphalābhilāṣī /",
  "XXbsa048_u:31_3": "rātriṃdivā svapnamupaiti jantuṃ mahīghanatve sucireṇa suptaḥ //",
  "XXbsa048_u:31_4": "phale na pakve kṛtakarmaṇaśca vāyuḥ punaḥ krāmati janmanīha /",
  "XXbsa048_u:31_5": "pakvaṃ phalaṃ syād gata eva vāyuḥ paratra śīghraṃ maraṇaṃ hi loke //",
  "XXbsa048_u:31_6": "yatha jinendro daśadigvyavasthito majjāsthimāṃsaṃ na ca tasya kāye /",
  "XXbsa048_u:31_7": "praveśayet sattvahitāya dhātunirmāṇakalpena karoti kṛtyam //",
  "XXbsa048_u:31_8": "evaṃ kramājjāgrati suptacittaḥ phalaṃ ca vāñchet savikalpajālam /",
  "XXbsa048_u:31_9": "svapnopamāste khalu sarvadharmā mṛṣāmṛṣāścāpyubhayorabhāvaḥ // iti /",
  "XXbsa048_u:32_0": "saṃvṛtisatyamelāvaṇasaṃśayaparicchedaḥ ṣaṣṭhaḥ // 6 //",
  "XXbsa048_u:33_0": "7. saptamaḥ paricchedaḥ",
  "XXbsa048_u:34_0": "yathā dīpo ghaṭāntaḥstho bāhyo naivāvabhāsate /",
  "XXbsa048_u:34_1": "bhinne tu taddhaṭe paścād dīpajvālābhibhāsate //",
  "XXbsa048_u:34_2": "svakāya eva hi ghaṭo dīpa eva hi tattvakam /",
  "XXbsa048_u:34_3": "guruvaktreṇa saṃbhinne buddhajñānaṃ sphuṭaṃ bhavet //",
  "XXbsa048_u:34_4": "gaganaṃ gaganobhdūtamākāśākāśaṃ sa paśyati /",
  "XXbsa048_u:34_5": "tathaiva hi gurorvaktrātprayogo 'yaṃ pradarśitaḥ // iti /",
  "XXbsa048_u:34_6": "dharmā ime śabdarutena vyākṛtā dharmaśca śabdaśca hi nātra labhyate /",
  "XXbsa048_u:34_7": "na caikatāṃ cāpyavatīrya dharmatāmanuttarāṃ kṣāntivarāṃ spṛśiṣyate // iti /",
  "XXbsa048_u:34_8": "namaste varadavajrāgrya bhūtakoṭe namo 'stu te /",
  "XXbsa048_u:34_9": "namaste śūnyatāgarbha buddhabodhe namo 'stu te //",
  "XXbsa048_u:34_10": "dadasva me mahācārya abhisaṃbodhidarśanam /",
  "XXbsa048_u:34_11": "sarvabuddhamahājñānaṃ sarvaśūnyamanuttaram //",
  "XXbsa048_u:34_12": "dadasva me mahāsattva svānubhāvaikalakṣaṇam /",
  "XXbsa048_u:34_13": "karmajanmavinirmuktamihaiva bodhimavāpnuyām //",
  "XXbsa048_u:34_14": "ta(tva)tpādapaṅkajaṃ muktvā nāstyanyaccharaṇaṃ prabho /",
  "XXbsa048_u:34_15": "tasmātprasīda buddhāgrya jagadvīra mahāmune //",
  "XXbsa048_u:34_16": "evaṃ stutvā tu taṃ divyamadhyeṣaṇavidhiṃ param /",
  "XXbsa048_u:34_17": "śiṣye kāruṇyamutpādya guruḥ śrīmān guṇodadhiḥ //",
  "XXbsa048_u:34_18": "prasannavadano bhūtvā sānukampaḥ praharṣitaḥ /",
  "XXbsa048_u:34_19": "śrāvayetsamayaṃ divyaṃ yogatantrobhdavaṃ param //",
  "XXbsa048_u:34_20": "tataḥ samāhitācāryo bodhicittaṃ niṣpādayet /",
  "XXbsa048_u:34_21": "kalaśe vātha śaṃkhe vā bodhicittaṃ nidhāya ca //",
  "XXbsa048_u:34_22": "tatastaṃ śiṣyamāhūya sarvabuddhairadhiṣṭhitam /",
  "XXbsa048_u:34_23": "arpayetsamayaṃ tasya jinamudrāsamanvitam //",
  "XXbsa048_u:34_24": "abhiṣeko hi dātavyo dvitīyenaiva vajriṇā /",
  "XXbsa048_u:34_25": "māṅgalyovduṣṭaśabdena vāditravividhasvanaiḥ //",
  "XXbsa048_u:34_26": "traidhātukābhiṣekeṇa śiṣyaḥ kṛtanatāñjaliḥ /",
  "XXbsa048_u:34_27": "anujñātaṃ tatastasya dadyāttatrapracoditaḥ //",
  "XXbsa048_u:34_28": "mālāsalilasaṃbuddhavajraghaṇṭātha darpaṇam /",
  "XXbsa048_u:34_29": "nāmācāryamanujñāta abhiṣekakramo hyayam //",
  "XXbsa048_u:34_30": "tataḥ samarpayet tasya bāhyābhisaṃbodhilakṣaṇam /",
  "XXbsa048_u:34_31": "saṃpradāye yadāvāptaṃ guruparvakramāgatam // iti /",
  "XXbsa048_u:34_32": "toye nirmalake nadīsarasi vā binduśca yo līnakaḥ /",
  "XXbsa048_u:34_33": "śuddhaṃ tatkramaśo 'nubhedagaditaṃ yogī smarennityaśaḥ /",
  "XXbsa048_u:34_34": "ādarśe hyanilakṣayaḥ kramagatastadvanna saṃprekṣyate",
  "XXbsa048_u:34_35": "piṇḍagrāha iti kramo vidhimatāmevaṃ samutprekṣyate //",
  "XXbsa048_u:34_36": "sarvāṅgabhāvanātītaṃ kalpanākalpavarjitam /",
  "XXbsa048_u:34_37": "mātrābindusamātītaṃ etanmaṇḍalamuttamam //",
  "XXbsa048_u:34_38": "viśatī(ti) yaḥ sarvabhāvānāṃ rūpārūpeṣu nirmalam /",
  "XXbsa048_u:34_39": "bodhitaścoditaṃ cittaṃ maṇḍalaṃ maṇḍalākṛtim //",
  "XXbsa048_u:34_40": "astīti nāstīti ubhe 'pi antā śuddhī aśuddhīti ime 'pi antā /",
  "XXbsa048_u:34_41": "tasmādubhe antavivarjayitvā madhye 'pi sthānaṃ na karoti paṇḍitaḥ // iti /",
  "XXbsa048_u:34_42": "ākāśānantamityarthaṃ sarvabhūtamahālayam /",
  "XXbsa048_u:34_43": "vibhūtiḥ śrīvibho rājā sarvāśāparipūrakaḥ //",
  "XXbsa048_u:34_44": "aho buddha aho buddha aho dharmasya deśanā /",
  "XXbsa048_u:34_45": "śuddhatattvārthaśuddhārtha bodhicitta namo 'stu te //",
  "XXbsa048_u:35_0": "paramārthasatyamelāvaṇasaṃśayaparicchedaḥ saptamaḥ // 7 //",
  "XXbsa048_u:36_0": "8. aṣṭamaḥ paricchedaḥ",
  "XXbsa048_u:37_0": "sthūlaṃ śabdamayaṃ prāhuḥ sūkṣmaṃ cittāmayantathā /",
  "XXbsa048_u:37_1": "cittayā rahitaṃ yat tad yogināṃ paramaṃ padam // iti /",
  "XXbsa048_u:37_2": "svasaṃvedyaṃ tu tattattvaṃ vaktuṃ nānyasya pāryate /",
  "XXbsa048_u:37_3": "bhaktibhāvanayā gamyaṃ na gamyaṃ cānyathā nu tat //",
  "XXbsa048_u:37_4": "jñātvā tattvaṃ tataḥ kṛtvā bhaktibhāvamaharniśam /",
  "XXbsa048_u:37_5": "tasmin paramanirvāṇe pade śānte hyanuttare //",
  "XXbsa048_u:37_6": "tatastadbhaktisāmarthyād bhāvanābalanirmitam /",
  "XXbsa048_u:37_7": "tasminnutpadyate rūpaṃ kimapyānandajaṃ param //",
  "XXbsa048_u:37_8": "dhagityākārasaṃbhūtaṃ sphuratsaṃhārākārakam /",
  "XXbsa048_u:37_9": "bhūrbhuvaḥsvaridaṃ sarvaṃ dyotayat sacarācaram //",
  "XXbsa048_u:37_10": "bhāvanābalasāmarthyāt prajñopāyātmakaṃ śivam /",
  "XXbsa048_u:37_11": "sarvakleśavinirmuktaṃ sarvalakṣaṇabhūṣitam //",
  "XXbsa048_u:37_12": "śūnyatājñānasaṃbhūtaṃ nirdvandvaṃ paramaṃ śivam /",
  "XXbsa048_u:37_13": "sarvākāravaropetaṃ grāhyagrāhakavarjitam //",
  "XXbsa048_u:37_14": "jñānaṃ māyopamaṃ śuddhaṃ svacchaṃ prakṛtinirmalam /",
  "XXbsa048_u:37_15": "śabdagandharasātītaṃ tathā sparśavivarjitam //",
  "XXbsa048_u:37_16": "dṛśyate paramekena samādhau jñānacakṣuṣā /",
  "XXbsa048_u:37_17": "chāyāmāyopamaṃ divyaṃ divyasaṃsthānasayutam //",
  "XXbsa048_u:37_18": "sphurajjñānormimālābhirvividhānekavigraham /",
  "XXbsa048_u:37_19": "indrāyudhanibhaṃ kāyaṃ labhante tattvabhāvakāḥ //",
  "XXbsa048_u:37_20": "bhāvanāyogasāmarthyāt samayānāṃ ca pālanāt /",
  "XXbsa048_u:37_21": "īdṛśaṃ prāpyate rūpaṃ na vācyaṃ yajjinairapi //",
  "XXbsa048_u:37_22": "yatra kāyo na vākcittaṃ sthānaṃ yatsarvagaṃ param /",
  "XXbsa048_u:37_23": "saṃpradāyavaśāt tatra svasya rūpaṃ vibhāvyate //",
  "XXbsa048_u:37_24": "aho suvismayakaramaho śāntamatīndriyam /",
  "XXbsa048_u:37_25": "aho paramagambhīraṃ buddhatvaṃ padamuttamam // iti /",
  "XXbsa048_u:37_26": "aho vajra aho vajra aho vajrasya deśanā /",
  "XXbsa048_u:37_27": "yatra na kāyavākcittaṃ tatra rūpaṃ vibhāvyate // iti /",
  "XXbsa048_u:38_0": "bhaṭṭārakapādenāpyuktam-",
  "XXbsa048_u:38_1": "śauśīryaṃ nāsti te kāye māṃsāsthirudhiraṃ na ca /",
  "XXbsa048_u:38_2": "indrāyudhamivākāśe kāyaṃ darśitavānasi //",
  "XXbsa048_u:38_3": "nāmayo nāśuciḥ kāye kṣuttṛṣṇāsaṃbhavau na ca /",
  "XXbsa048_u:38_4": "tvayā lokānuvṛttyarthaṃ darśitā laukikī kriyā // iti /",
  "XXbsa048_u:39_0": "sarvakalpasamuccaye 'pyāha-",
  "XXbsa048_u:40_0": "gṛhītvā hṛdayaṃ śuddhaṃ vajradehavibhāvanā /",
  "XXbsa048_u:40_1": "dṛḍhaṃ sāramasauśīryaṃ vajrakāyaṃ sa labdhavān // iti /",
  "XXbsa048_u:40_2": "khasamā virajā vararūpadharā aśarīra alakṣaṇa prajñasutā /",
  "XXbsa048_u:40_3": "sugambhīraguṇodadhi kāruṇikā dada mūrdhni pāṇi mama apratimā // iti /",
  "XXbsa048_u:41_0": "apratiṣṭhitanirvāṇadhātumelāvaṇasaṃśayaparicchedo 'ṣṭamaḥ // 8 //",
  "XXbsa048_u:42_0": "9. navamaḥ paricchedaḥ",
  "XXbsa048_u:43_0": "phalena hetumāmudrya phalamāmudrya hetunā /",
  "XXbsa048_u:43_1": "vibhāvyamanyathāsiddhiṃ kalpakoṭirna jāyate // iti /",
  "XXbsa048_u:43_2": "vajrasattvo mahārājaścodanīyo muhurmuhuḥ // iti /",
  "XXbsa048_u:43_3": "pādaprasārikaṃ muktvā tyaktvā saṃsārapeṭakam /",
  "XXbsa048_u:43_4": "sādhayed vajrasattvāgraṃ nityamudyuktamānasaḥ //",
  "XXbsa048_u:43_5": "kaukṛtyastyānamiddhādīn parityajya prayatnataḥ /",
  "XXbsa048_u:43_6": "anyathā naiva siddhiḥ syāt kalpakoṭiśatairapi // iti /",
  "XXbsa048_u:43_7": "bhikṣubhāve sthitā ye 'tra ye tu tarkaratā narāḥ /",
  "XXbsa048_u:43_8": "vṛddhabhāve sthitā ye tu teṣāṃ tattvaṃ na deśayet // iti /",
  "XXbsa048_u:43_9": "upāyarahitaṃ jñānaṃ śikṣā cāpi hi deśitā /",
  "XXbsa048_u:43_10": "śrāvakāṇāṃ mahāvīra avatā(dhā)raya teṣu vai //",
  "XXbsa048_u:44_0": "mūlasūtre 'pyāha-",
  "XXbsa048_u:44_1": "daśakuśalān karmapathānicchanti jñānavarjitāḥ // iti /",
  "XXbsa048_u:44_2": "śrāvakayānamaśikṣatha bhikṣo bodhicariyata tatra carīye /",
  "XXbsa048_u:44_3": "bodhicarīṃ cara buddhaguṇeṣu eṣa nidānabhaviṣya svayaṃbhūḥ // iti /",
  "XXbsa048_u:44_4": "duṣkarairniyamaistīrvrairmūrtiḥ śuṣyati duḥkhitā /",
  "XXbsa048_u:44_5": "duḥkhād vikṣipyate cittaṃ vikṣepāt siddhiranyathā // iti /",
  "XXbsa048_u:45_0": "mūlasūtre 'pyāha-",
  "XXbsa048_u:45_1": "duṣkarairniyamaistīvraiḥ sevyamāno na siddhyati /",
  "XXbsa048_u:45_2": "sarvakāmopabhogaistu sevayaṃścāśu siddhyati // iti /",
  "XXbsa048_u:45_3": "rāgo dveṣaśca mohaśca traya ete viṣaṅgatāḥ /",
  "XXbsa048_u:45_4": "viṣatvamupayāntyeva viṣameṇa tu sevitā //",
  "XXbsa048_u:45_5": "amṛtatvaṃ punaryānti, amṛtena tu sevitāḥ // iti /",
  "XXbsa048_u:45_6": "badhyati yena jaḍaḥ parimucyati tena budhaḥ /",
  "XXbsa048_u:45_7": "bodhivibhāvanayā viparītamidaṃ sakalam //",
  "XXbsa048_u:45_8": "yena mūḍhāḥ prabadhyante śīryante rauravāntike /",
  "XXbsa048_u:45_9": "taireva hi vimucyante sukhaṃ prajñābalena tu // iti /",
  "XXbsa048_u:45_10": "athātaḥ saṃpravakṣyāmi sarvato viśvamuttamam /",
  "XXbsa048_u:45_11": "sarvabuddhasamāyogaḍākinījālasaṃvaram //",
  "XXbsa048_u:45_12": "rahasye parame ramye sarvātmani sadā sthitaḥ /",
  "XXbsa048_u:45_13": "sarvabuddhamayaḥ śrīmān vajrasattvodayaḥ sukhaḥ //",
  "XXbsa048_u:45_14": "tathāgatamahādivyaratnajālādyalaṅkṛtam /",
  "XXbsa048_u:45_15": "tato ghaṇṭāvasaṃsaktavitānavitatojjvale //",
  "XXbsa048_u:45_16": "vajragītiṃ ca pūjāṃ ca gītavādyairvikurvitam /",
  "XXbsa048_u:45_17": "puṣpadhūpādiyogena dīpagandhādibhistathā //",
  "XXbsa048_u:45_18": "prasādhayanti bhavane sodyānādiṣu vā punaḥ /",
  "XXbsa048_u:45_19": "sarvabuddhasamāyogaḍākinījālasaṃvaram //",
  "XXbsa048_u:45_20": "tatrāsanaṃ niveśyādau mṛdusaṃsparśajaṃ sukham /",
  "XXbsa048_u:45_21": "viśvapadmapaṭacchannaṃ sarvaśuddhāsanaṃ hi tat //",
  "XXbsa048_u:45_22": "sarvabuddhasamāyogaṃ yogeśvaravikurvitam /",
  "XXbsa048_u:45_23": "śrīvajrasattvarūpāstu vikurvanti hi yatra(tattu) vai //",
  "XXbsa048_u:45_24": "sarvadhātumayī(yo) vāpi jīvamūlamayastathā /",
  "XXbsa048_u:45_25": "svādhidaivatpratimukhaiḥ siddhimudrāpravartanam //",
  "XXbsa048_u:45_26": "niṣiktāṃ ghaṭitāṃ vāpi(bhi)saṃskṛtāṃ vā sucitritām /",
  "XXbsa048_u:45_27": "vicitrapratibimbāṃ ca cinhamudrāṃ prakalpayet //",
  "XXbsa048_u:45_28": "tadāsaneṣu prāṇasarvān yathāsthānaṃ hi vinyaset /",
  "XXbsa048_u:45_29": "caturasraṃ caturdvāraṃ catustoraṇamaṇḍitam /",
  "XXbsa048_u:45_30": "vajraratnapadmādi tu dvārapālena yojayet //",
  "XXbsa048_u:45_31": "svādhidaivatpratimukhaiḥ suprasādhitayoṣitam /",
  "XXbsa048_u:45_32": "svamudrācinhasubhagāṃ kalpayed gaṇamaṇḍalam //",
  "XXbsa048_u:45_33": "caturasraṃ caturdvāraṃ catustoraṇamaṇḍitam /",
  "XXbsa048_u:45_34": "catuḥsūtrasamāyuktamaṣṭastambhopaśobhitam //",
  "XXbsa048_u:45_35": "hārārddhahāraracitaṃ paṭṭasragdāmabhūṣitam /",
  "XXbsa048_u:45_36": "ghaṇṭāpatākasaṃśobhaṃ cāmarādivibhūṣitam //",
  "XXbsa048_u:45_37": "candrārddhavajrakoṇaṃ ca dvāraniryūhasandhiṣu /",
  "XXbsa048_u:45_38": "patvi(kṣi)ṇīkramaśīrṣādivicitra paṭamaṇḍitam //",
  "XXbsa048_u:45_39": "sarvadevyupabhogaistu sevyamānairyathāsukham /",
  "XXbsa048_u:45_40": "svādhidaivatayogena svamātmānaṃ prapūjayet //",
  "XXbsa048_u:45_41": "pūjyate 'nuyogena sarvayogasukhena tu /",
  "XXbsa048_u:45_42": "samāsvādayamānastvatiyogena siddhyati //",
  "XXbsa048_u:45_43": "anena sarvabuddhātmā rasāyanasukhena tu /",
  "XXbsa048_u:45_44": "siddhyet śrīvajrasattvāyuryauvanārogyasatsukham //",
  "XXbsa048_u:45_45": "sarvabuddhamahākāyaḥ sarvabuddhasarasvatī /",
  "XXbsa048_u:45_46": "sarvabuddhamahācittaḥ sarvabuddhamahāmahaḥ //",
  "XXbsa048_u:45_47": "sarvabuddhamahārājā sarvavajradharādhipaḥ /",
  "XXbsa048_u:45_48": "sarvalokeśvarapatiḥ sarvaratnādhipeśvaraḥ //",
  "XXbsa048_u:45_49": "tābhiḥ saṃramyamāṇastu yātyutpattiṃ tu gacchataḥ /",
  "XXbsa048_u:45_50": "sarvadevīmahāsidhya(ddha)ścakravartī prasidhyati // iti /",
  "XXbsa048_u:45_51": "pratyahaṃ pratimāsaṃ vā pratisaṃvatsaraṃ tathā /",
  "XXbsa048_u:45_52": "yathādhiṣṭhānato vāpi nāṭayed buddhasaṃvaram // iti /",
  "XXbsa048_u:45_53": "utthito vā niṣaṇṇo vā caṃkraman vā yathāsthitaḥ /",
  "XXbsa048_u:45_54": "praharṣan vā jalpan vā yatra tatra yathā tathā //",
  "XXbsa048_u:45_55": "yadyadindriyamārgatvaṃ yāyāttattatsvabhāvataḥ /",
  "XXbsa048_u:45_56": "asamāhitayogena sarvabuddhamayaṃ vahet //",
  "XXbsa048_u:45_57": "khasamaṃ khasamākāramaparyantasāgaropamam /",
  "XXbsa048_u:45_58": "rāgadharmanayo dveṣo vilāsaḥ krīḍāvistaraḥ //",
  "XXbsa048_u:45_59": "gṛhītaṃ vastumātraṃ ca śiṣyabodhanakāraṇāt /",
  "XXbsa048_u:45_60": "kati janmāntaraṃ vaktuṃ sahyate rāgadeśanā //",
  "XXbsa048_u:46_0": "śrīsarvabuddhasamāyogaḍākinījālasaṃvaranyāyena bodhisattvacaritadharmodayābhisaṃbodhiprapañcatāmelāvaṇa-saṃśayaparicchedo navamaḥ /",
  "XXbsa048_u:47_0": "10. daśamaḥ paricchedaḥ",
  "XXbsa048_u:48_0": "mahāṭavīpradeśeṣu phalapuṣpādyalaṅkṛte /",
  "XXbsa048_u:48_1": "parvate vijane sādhyamidaṃ dhyānasamuccayam //",
  "XXbsa048_u:48_2": "sevayan kāmaguṇān pañca jñānārthirāgiṇaḥ sadā // iti /",
  "XXbsa048_u:48_3": "kāyavākcittavajrāṇāṃ kāyavākcittabhāvanam /",
  "XXbsa048_u:48_4": "svarūpeṇaiva tatkāryaṃ laghusiddhiravāpyate //",
  "XXbsa048_u:48_5": "jaṭāmukuṭadharaṃ bimbaṃ sitavarṇanibhaṃ mahat /",
  "XXbsa048_u:48_6": "kārayed vidhivat sarvaṃ mantrasaṃvarasaṃvṛtam //",
  "XXbsa048_u:48_7": "ṣoḍaśābdikāṃ gṛhya sarvālaṅkārabhūṣitām /",
  "XXbsa048_u:48_8": "cāruvaktrāṃ viśālākṣīṃ prāpya vidyāvrataṃ caret //",
  "XXbsa048_u:48_9": "locanāpadasaṃbhogairvajracinhaistu bhāvayet /",
  "XXbsa048_u:48_10": "mudrāmantravidhānajñāṃ mantratantrasuśikṣitām //",
  "XXbsa048_u:48_11": "kuryāt tāthāgatīṃ bhāryāṃ buddhabodhipratiṣṭhitām /",
  "XXbsa048_u:48_12": "guhyapūjāṃ prakurvīta catuḥsattvāṃ(sandhyaṃ) mahāvratī //",
  "XXbsa048_u:48_13": "kandamūlaphalaiḥ sarvaṃ bhojyabhakṣyaṃ samārabhet /",
  "XXbsa048_u:48_14": "evaṃ buddho bhavecchīghraṃ mahājñānodadhiḥ prabhuḥ //",
  "XXbsa048_u:48_15": "ṣaṇmāsenaiva tatsarvaṃ prāpnuyānnātra saṃśayaḥ /",
  "XXbsa048_u:48_16": "vane bhikṣāṃ bhramennityaṃ sādhako dṛḍhaniścayaḥ //",
  "XXbsa048_u:48_17": "dadanti te bhaya[tra]stā bhojanaṃ divyamaṇḍitam /",
  "XXbsa048_u:48_18": "atikramanti yadi vajrātmā nāśaṃ vajrākṣaraṃ bhavet //",
  "XXbsa048_u:48_19": "surīṃ nāgīṃ mahāyakṣīmasurīṃ mānuṣīmapi /",
  "XXbsa048_u:48_20": "prāpya vidyāvrataṃ kāryaṃ trivajrajñānasevitam // iti /",
  "XXbsa048_u:48_21": "dvayendriyasamāpattyā vyāyāmavidhirantare /",
  "XXbsa048_u:48_22": "harṣacittaṃ muneḥ siddhau mahāsukhamiti smṛtam //",
  "XXbsa048_u:49_0": "niṣprapañcacaryāmelāvaṇasaṃśayaparicchedo daśamaḥ // 10 //",
  "XXbsa048_u:50_0": "11. ekādaśaḥ paricchedaḥ",
  "XXbsa048_u:51_0": "parvateṣu vivikteṣu nadīprasravaṇeṣu ca /",
  "XXbsa048_u:51_1": "śmaśānādiṣvapi kāryamidaṃ dhyānasamuccayam //",
  "XXbsa048_u:51_2": "prayogādīṃśca tattvena varjayet tattvavit sadā /",
  "XXbsa048_u:51_3": "vajrasattvadahaṃkāraṃ muktvā nānyatra kārayet //",
  "XXbsa048_u:51_4": "prayogā api na budhyante śuddhatattve vyavasthite /",
  "XXbsa048_u:51_5": "nairātmyapadayogena yāvattat pratyavekṣyate //",
  "XXbsa048_u:51_6": "niḥsvabhāvapadasthasya divyopāyayutasya ca /",
  "XXbsa048_u:51_7": "siddhyate nirvicāreṇa yatkiñcit kalpacoditam //",
  "XXbsa048_u:51_8": "bhāvanāyogasāmarthyāt svayamevopatiṣṭhate /",
  "XXbsa048_u:51_9": "tatsarvaṃ kṣaṇamātreṇa yatkiñcit siddhilakṣaṇam //",
  "XXbsa048_u:51_10": "rūpādyādhyātmikān dharmān paśyet vipaśyanocyate /",
  "XXbsa048_u:51_11": "akṣobhyādiyathāsaṃkhyaṃ kalpayet śamatho bhavet //",
  "XXbsa048_u:51_12": "anayorniḥsvabhāvatvāt tathatāśāntasaṃjñakam /",
  "XXbsa048_u:51_13": "tathatāmaṇḍale yogī sarvabuddhān praveśayed // iti /",
  "XXbsa048_u:51_14": "nirvāṇāgnimahāgore bhasmaśo 'pi na mucyate /",
  "XXbsa048_u:51_15": "na tatra vidyate tattvaṃ nendriyārthā na dhātavaḥ //",
  "XXbsa048_u:51_16": "nirvikalpo yadā viraḥ sthitiṃ hitvā tu laukikīm /",
  "XXbsa048_u:51_17": "ācaret sarvakāryāṇi buddhāḥ paśyanti tat tadā //",
  "XXbsa048_u:51_18": "bālavadvicaredyuktyā sarvataśchinnasaṃśayaḥ /",
  "XXbsa048_u:51_19": "nirābhogo yadā yogī tadā varṣanti saṃpadaḥ //",
  "XXbsa048_u:51_20": "aśeṣapāpayuktānāṃ mohāvaraṇasusthitāḥ /",
  "XXbsa048_u:51_21": "unmattavratayogena ṣaṇmāsādamoghasiddhayaḥ //",
  "XXbsa048_u:51_22": "sarvabuddhāna svayaṃ paśyet sarvakāmaiḥ prapūryate /",
  "XXbsa048_u:51_23": "na kṣīṇo na ca hānitvaṃ svecchāyurjāyate vapuḥ //",
  "XXbsa048_u:51_24": "anuttarāṃ parāṃ bodhiṃ saṃprāpnotyaprayatnataḥ /",
  "XXbsa048_u:51_25": "vinā yatnena sidhyanti sarvakāmasukhotsukāḥ //",
  "XXbsa048_u:51_26": "gambhīrapadaṃ nityaṃ gacchet tiṣṭhan niṣaṇṇakaḥ /",
  "XXbsa048_u:51_27": "prabhāsvarajñānakauśalyād yogināṃ lakṣaṇaṃ sadā //",
  "XXbsa048_u:51_28": "anena dhyānayogena cittaratnaṃ dṛḍhībhavet /",
  "XXbsa048_u:51_29": "adhiṣṭhānaṃ ca kurvanti buddhā bodhipratiṣṭhitāḥ //",
  "XXbsa048_u:51_30": "evaṃ bhūtvā niviṣṭastu bhāvayed bhāvatatparaḥ /",
  "XXbsa048_u:51_31": "yāvanna khidyate cittaṃ samāhitamanāḥ sudhīḥ //",
  "XXbsa048_u:51_32": "khinnastu paryaṭet paścādyathārucitaceṣṭitaḥ /",
  "XXbsa048_u:51_33": "bhāvayedvipulāṃ bodhimīṣadunmīlitekṣaṇaḥ //",
  "XXbsa048_u:51_34": "hasan jalpan kvacittiṣṭhan kvacitkuryāt pravartanam //",
  "XXbsa048_u:51_35": "bhāvanāsaktacittastu yathā khedo na jāyate //",
  "XXbsa048_u:51_36": "evaṃ samādhiyuktasya nirvikalpasya mantriṇaḥ /",
  "XXbsa048_u:51_37": "kālāvadhiṃ parityajya siddhyate 'nuttaraṃ padam // iti /",
  "XXbsa048_u:51_38": "sūkṣmarūpaṃ laghusparśaṃ vyāptisaṃprāptimeva ca /",
  "XXbsa048_u:51_39": "prakāśaṃ caiva sthairyaṃ ca vaśitvaṃ kāmāvasānikam // iti /",
  "XXbsa048_u:51_40": "bodhijñānāgrasaṃprāptaṃ paśyati buddhasuprabham /",
  "XXbsa048_u:51_41": "buddhasaṃbhogakāyaṃ ca ātmānaṃ laghu paśyati //",
  "XXbsa048_u:51_42": "traidhātukamahāsattvaiḥ pūjyamānaṃ sa paśyati /",
  "XXbsa048_u:51_43": "buddhaiśca bodhisattvaiśca pañcakāmaguṇairdhruvam //",
  "XXbsa048_u:51_44": "pūjitaṃ paśyate nityaṃ mahajñānā grasambhavam /",
  "XXbsa048_u:51_45": "vajrasattvaṃ mahābimbaṃ vajradharmaṃ mahāyaśam //",
  "XXbsa048_u:51_46": "svabimbaṃ paśyate svapne guhyavajramahāyaśāḥ /",
  "XXbsa048_u:51_47": "praṇamanti mahābuddhā bodhisattvāśca vajriṇaḥ //",
  "XXbsa048_u:51_48": "drakṣyanti īdṛśān svapnān kāyavākcittasiddhidān /",
  "XXbsa048_u:51_49": "sarvalaṅkārasampūrṇāṃ surakanyāṃ manoramām //",
  "XXbsa048_u:51_50": "dārakaṃ dārikāṃ paśyan sa siddhimadhigacchati /",
  "XXbsa048_u:51_51": "daśadiksarvabuddhānāṃ kṣetrasthaṃ paśyati dhruvam //",
  "XXbsa048_u:51_52": "dadanti hṛṣṭacittātmā dharmagañjaṃ manoramam /",
  "XXbsa048_u:51_53": "dharmacakragataṃ kāyaṃ sarvasattvaparivṛtam //",
  "XXbsa048_u:51_54": "paśyate yogasamaye dhyānavajrapratiṣṭhitaḥ // iti /",
  "XXbsa048_u:51_55": "nāpaneyamataḥ kiñcit prakṣeptavyaṃ na kiñcan /",
  "XXbsa048_u:51_56": "draṣṭavyaṃ bhūtato bhūtaṃ bhūtadarśī vimucyate // iti /",
  "XXbsa048_u:51_57": "uktaṃ ca suvarṇaprabhāsasūtre-",
  "XXbsa048_u:52_0": "na buddhaḥ parinirvāti na dharmaḥ parihīyate /",
  "XXbsa048_u:52_1": "sattvānāṃ paripākāya parinirvāṇaṃ nidarśayet //",
  "XXbsa048_u:53_0": "laṅkāvatārasūtre 'pyuktam-",
  "XXbsa048_u:53_1": "na hyatrotpadyate kiñcit pratyayairna nirudhyate /",
  "XXbsa048_u:53_2": "utpadyante nirudhyante pratyayā eva kalpitāḥ //",
  "XXbsa048_u:54_0": "ata uktam-",
  "XXbsa048_u:54_1": "yena yena hi bhāvena manaḥ saṃyujyate nṛṇām /",
  "XXbsa048_u:54_2": "tena tanmayatāṃ yāti viśvarūpo maṇiryathā //",
  "XXbsa048_u:54_3": "utpattiryat saṃvṛtisatyametad mṛtyurhi nāma paramārthasatyam /",
  "XXbsa048_u:54_4": "kramadvayasyāsya gurukṛpāto jñātā bhaved yaḥ sa bhaviṣyabuddhaḥ //",
  "XXbsa048_u:54_5": "satyadvayasyādvayavatpraveśo 'nucchedarūpo 'pyaviśeṣa eva /",
  "XXbsa048_u:54_6": "ekatvamevāstyanayordvayoriti vijñāyate yena vimukta eṣaḥ //",
  "XXbsa048_u:54_7": "girīndramūrdhnaḥ prapatet tu kaścid neccheccyutiṃ sa cyavate tathāpi /",
  "XXbsa048_u:54_8": "guruprasādādvihitopadeśād necchedvimuktiṃ sa tathāpi muktaḥ //",
  "XXbsa048_u:54_9": "matvā sattveṣu tattvādhigamakṣamatābhāvamālokya loke",
  "XXbsa048_u:54_10": "uttālābdhitaraṅgabhaṅgavikalāddīpasphuliṅgādiva /",
  "XXbsa048_u:54_11": "kiñcit kiñcidupetya saṃcitavatā grantho mayāyaṃ kṛto",
  "XXbsa048_u:54_12": "ye vai saṃvṛtisatyabhītasubhagāsteṣāmalāto bhavet //",
  "XXbsa048_u:55_0": "atyantaniṣprapañcacaryāmelāvaṇasaṃśayapariccheda ekādaśaḥ //",
  "XXbsa048_u:56_0": "samāpto 'yaṃ caryāmelāvaṇapradīpaḥ //",
  "XXbsa048_u:57_0": "kṛtirīyaṃ mahācārya-āryadevapādānām //"
}