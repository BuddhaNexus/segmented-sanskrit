{
  "XXbsa048_u:0": "Caryāmelāvaṇapradīpaḥ",
  "XXbsa048_u:1": "1. prathamaḥ paricchedaḥ",
  "XXbsa048_u:2": "om namaḥ śrīvajrasattvāya /",
  "XXbsa048_u:3": "namata khasamaniḥsvabhāvaśuddhaṃ namatāśeṣamanakṣaramavācyam /",
  "XXbsa048_u:4": "namatānāgatasarvagaṃ sugataṃ namata samastāśeṣasarvaśūnyam //",
  "XXbsa048_u:5": "“arthapratiśaraṇena bhavitavyaṃ śabdastu yathā tathā” iti /",
  "XXbsa048_u:6": "tantre-",
  "XXbsa048_u:7": "caturaśītisāhasre dharmaskandhe mahāmuneḥ /",
  "XXbsa048_u:8": "tattvaṃ vai ye na jānanti sarve te niṣphalāya vai // iti /",
  "XXbsa048_u:9": "ata āha-",
  "XXbsa048_u:10": "ādikarmikasandhānaṃ paramārthāvatāraṇe /",
  "XXbsa048_u:11": "upāyaścaiva saṃbuddhaiḥ sopānamiva nirmitaḥ // iti /",
  "XXbsa048_u:12": "prabodhanamelāvaṇasaṃśayaparicchedaḥ prathamaḥ // 1 //",
  "XXbsa048_u:13": "2. dvitīyaḥ paricchedaḥ",
  "XXbsa048_u:14": "pañcaskandhāḥ samāsena pañcabuddhāḥ prakīrtitāḥ /",
  "XXbsa048_u:15": "vajra-āyatanānyeva bodhisattvāgryamaṇḍalam //",
  "XXbsa048_u:16": "pṛthivī locanā khyātā abdhāturmāmakī smṛtā /",
  "XXbsa048_u:17": "pāṇḍarākhyā bhavettejastārā vāyuḥ prakīrtitā //",
  "XXbsa048_u:18": "rūpaśabdādibhirmantrī devatāṃ bhāvayet sadā //",
  "XXbsa048_u:19": "ityuktaṃ bhagavatā śrīguhyasamājamahāyogatantre /",
  "XXbsa048_u:20": "kulāḥ śatavidhāḥ proktāḥ saṃkṣepeṇa tu pañcadhā /",
  "XXbsa048_u:21": "punastrividhatāṃ yānti kāyavākcittabhedataḥ //",
  "XXbsa048_u:22": "“pañcaskandhāḥ samāsena pañcabuddhāḥ prakīrtitāḥ / “",
  "XXbsa048_u:23": "pañcahṛdayamāśritya pañcatanuvinirgatam /",
  "XXbsa048_u:24": "pañcavāyusamāyuktaṃ pañcakāmopabhogakṛta // iti /",
  "XXbsa048_u:25": "prakramaṇāt prāṇāyāmāccendriyadvāraistantubhiḥ /",
  "XXbsa048_u:26": "prakramate sadā kālaṃ prāṇa ityabhidhīyate //",
  "XXbsa048_u:27": "vātamūtrapurīṣāṇāṃ śukrādīnāṃ tathaiva ca /",
  "XXbsa048_u:28": "apanayanādapāno 'yaṃ yogibhirlakṣyate sadā //",
  "XXbsa048_u:29": "aśitaṃ khāditaṃ lehyaṃ peyaṃ coṣyañca sarvataḥ /",
  "XXbsa048_u:30": "samānayati yo nityaṃ samāna iti cocyate //",
  "XXbsa048_u:31": "ūrdhvagamāt saṃharaṇād bhakṣyabhojyādibhakṣaṇāt /",
  "XXbsa048_u:32": "udānakarmavijño 'yaṃ jñānena sahayogataḥ //",
  "XXbsa048_u:33": "vyāpanaṃ dhāraṇaṃ caiva gamanāgamanādikam /",
  "XXbsa048_u:34": "sarvasandhiṣu vyāptatvād vyāna ityabhidhīyate //",
  "XXbsa048_u:35": "pṛthivī locanā khyātā abdhāturmāmakī smṛtā /",
  "XXbsa048_u:36": "tejaḥ pāṇḍarā khyātā vāyustārā prakīrtitā //",
  "XXbsa048_u:37": "skandhaśca dhātuśca tathaivendriyaṃ ca pañcaiva pañcaiva kṛtaprabhedāḥ /",
  "XXbsa048_u:38": "tathāgatādhiṣṭhita ekaikaśaḥ saṃsārakarmāṇi kuto bhavanti //",
  "XXbsa048_u:39": "tathā sabāhyā viṣayāśca pañca ekaikaśaḥ pañcatathāgataiśca /",
  "XXbsa048_u:40": "svakasvakā nityamadhiṣṭhitāste jñānatrayaṃ pañcasamāśritaṃ ca //",
  "XXbsa048_u:41": "khadhātumadhyagataṃ cintenmaṇḍalaṃ sarvavajrajam /",
  "XXbsa048_u:42": "saṃhāraṃ ca prakurvīta yadīcchecchāntavajradhṛg // iti /",
  "XXbsa048_u:43": "pañcātmakaṃ pañcabhireva bhūtairdṛṣṭaṃ narāṇāṃ niyataṃ śarīram /",
  "XXbsa048_u:44": "tabhdāvabhāvairniyataṃ svacittaṃ prabhāvayantaḥ prabhavanti buddhāḥ // iti /",
  "XXbsa048_u:45": "khasamatantre 'pyāha-",
  "XXbsa048_u:46": "pañcabuddhātmaku sarvajago 'yaṃ paśyasu citraku nāṭaku divyam /",
  "XXbsa048_u:47": "yatra hi eku mahāsuhanāmā nṛtyati eku aneka rasena // iti /",
  "XXbsa048_u:48": "“saṃkṣepeṇa tu pañcadhā“",
  "XXbsa048_u:49": "kāyavākcittanidhyaptaiḥ svabhāvo nopalabhyate /",
  "XXbsa048_u:50": "mantramūrtiprayogeṇa na bodhirna ca bhāvanā //",
  "XXbsa048_u:51": "vicāryedaṃ samāsena kāyavākcittalakṣaṇam /",
  "XXbsa048_u:52": "bhāvayedvidhisaṃyogaṃ samādhiṃ mantrakalpitam // iti /",
  "XXbsa048_u:53": "na yogaḥ pratibimbeṣu niṣiktādiṣu jāyate /",
  "XXbsa048_u:54": "bodhicittamahāyogayoginastena devatāḥ //",
  "XXbsa048_u:55": "ātmā vai sarvabuddhatvaṃ sattvasauritvameva ca /",
  "XXbsa048_u:56": "svādhidaivadya(ta)",
  "XXbsa048_u:57": "yogena tasmādātmaiva sādhayet // iti /",
  "XXbsa048_u:58": "mantranidhyaptikāyena vācā manasi coditaḥ /",
  "XXbsa048_u:59": "sādhayet pravarāṃ siddhiṃ manaḥsantoṣaṇapriyām //",
  "XXbsa048_u:60": "kāyavivekamelāvaṇasaṃśayaparicchedo dvitīyaḥ // 2 //",
  "XXbsa048_u:61": "3. tṛtīyaḥ paricchedaḥ",
  "XXbsa048_u:62": "pañcavarṇaṃ mahāratnaṃ sarṣapasthūlamātrakam /",
  "XXbsa048_u:63": "nāsikāgre prayatnena bhāvayedyogataḥ sadā // iti /",
  "XXbsa048_u:64": "pañcajñānamayaṃ śvāsaṃ pañcabhūtasvabhāvakam //",
  "XXbsa048_u:65": "niścārya padmanāsāgre piṇḍarūpeṇa kalpayet /",
  "XXbsa048_u:66": "pañcavarṇaṃ mahāratnaṃ prāṇāyāmamiti smṛtam //",
  "XXbsa048_u:67": "atha bhagavān mahāvajrī vajrajāpārthabhāṣiṇam /",
  "XXbsa048_u:68": "pratyuvāca tataḥ samyakpraṇamyaikaṃ jagadruruḥ //",
  "XXbsa048_u:69": "laukikāgamamevedaṃ bodhicittaṃ prakāśitam //",
  "XXbsa048_u:70": "lokottaraṃ kathaṃ nāma pratipatsyantyāgāmikāḥ //",
  "XXbsa048_u:71": "sarvadṛṣṭiprahāṇāya tvayā dharmo hi deśitaḥ /",
  "XXbsa048_u:72": "tat kathaṃ bodhicittaṃ tu sā dṛṣṭiḥ sudṛḍhīkṛtā //",
  "XXbsa048_u:73": "uktamarthaṃ na budhyanti saṃdhyāyavākyamohitāḥ /",
  "XXbsa048_u:74": "yathārutaṃ te gṛṇhanti tathaiva hi pacanti ca //",
  "XXbsa048_u:75": "atha bhagavān viśvo vajrapāṇiṃ vadet tataḥ /",
  "XXbsa048_u:76": "sādhu sādhu ca guhyeśa vyākṛtāgāmikā tvayā //",
  "XXbsa048_u:77": "bodhicittaṃ bhavedvāyurambare ca vyavasthitaḥ /",
  "XXbsa048_u:78": "prāṇabhūtaśca sattvānāṃ pañcātmā daśasaṃjñakaḥ //",
  "XXbsa048_u:79": "pratītyadvādaśāṅgākhyaṃ svabhāvāt tritayaṃ bhavet /",
  "XXbsa048_u:80": "sarvendriyapradhānedaṃ vāyvākhyaṃ bodhicittakam //",
  "XXbsa048_u:81": "avyaktaṃ sūkṣmamityevaṃ vyaktamityucyate sadā /",
  "XXbsa048_u:82": "tadāśrayāttu karmāṇi kuryādviṣayādikaṃ janaḥ //",
  "XXbsa048_u:83": "śāntikaṃ pauṣṭikaṃ caiva vaśyābhicārakaṃ tathā /",
  "XXbsa048_u:84": "bodhicittātu tatsarvaṃ tritattvanilayāśrayā[t] //",
  "XXbsa048_u:85": "yāvaccālokasaṃketāḥ kalpitā vividhāstathā /",
  "XXbsa048_u:86": "bhavanti bodhicittāttu vikalpā vāyutaḥ sadā //",
  "XXbsa048_u:87": "sukhaduḥkhādiko dharmo bījādeva vidhīyate /",
  "XXbsa048_u:88": "bodhicittasvabhāvo 'sau skandhādyadvayakopamaḥ //",
  "XXbsa048_u:89": "prajñopāyaikayogena bodhicittaṃ jagad bhavet //",
  "XXbsa048_u:90": "svayaṃ samuccaretsvāmī dhyānādhyayanavarjitaḥ //",
  "XXbsa048_u:91": "divārātrivibhāgena candrasūryaprayogataḥ /",
  "XXbsa048_u:92": "niśvāso [hi] jagadvyāpī bodhicittaikamārutaḥ //",
  "XXbsa048_u:93": "śubhāśubhaphalaṃ tyaktvā bhavatyeva nabhopamaḥ // iti /",
  "XXbsa048_u:94": "prāṇāpānasamānākhyānudānavyānasaṃjñakān /",
  "XXbsa048_u:95": "nāgakūrmakṛkarāṃśca devadattadhanañjayān //",
  "XXbsa048_u:96": "kṛtvaitadātmano bimbaṃ strītattvaṃ nirmāya te punaḥ // iti /",
  "XXbsa048_u:97": "koṭākṣaḥ koṭavaḥ koṭāḥ koṭābhaśca koṭīrakaḥ /",
  "XXbsa048_u:98": "kolākṣaḥ kolāvaḥ kolaḥ kolābhaśca kalistathā //",
  "XXbsa048_u:99": "nāsikācchidrasaṃbhūtaḥ pañcabuddhakulasthitaḥ /",
  "XXbsa048_u:100": "pañcavāyurdhvasañcāro dehe carati nityaśaḥ //",
  "XXbsa048_u:101": "saṃvṛtighrāṇasañcārād dvārāttasya vinisṛtāḥ /",
  "XXbsa048_u:102": "vāmadakṣiṇadvandvāśca stabdhaścaite caturvidhāḥ //",
  "XXbsa048_u:103": "dakṣiṇāt prasaro dhāturhutabhuṅmaṇḍalañca vai /",
  "XXbsa048_u:104": "raktavarṇamidaṃ vaktraṃ padmanāthasya sañcaret //",
  "XXbsa048_u:105": "vāmācca prasaro dhāturvāyumaṇḍalaniḥsṛtaḥ /",
  "XXbsa048_u:106": "haritaḥ śyāmasaṃkāśaḥ karmanāthasya sañcaret //",
  "XXbsa048_u:107": "dvandvasya prasaro dhātuḥ kanakavarṇasya satribhaḥ /",
  "XXbsa048_u:108": "māhendramaṇḍalañcaiva ratnanāthasya sañcaret //",
  "XXbsa048_u:109": "stabdho na prasaro dhātuḥ kṣaṇādvāruṇamaṇḍalaḥ /",
  "XXbsa048_u:110": "śuddhasphaṭikasaṃkāśaṃ vajranāthasya sañcaret //",
  "XXbsa048_u:111": "sarvadhātuṃ samuddhṛtya hyādhārādheyadhāritaḥ /",
  "XXbsa048_u:112": "vairocanamahākāyo maraṇānte viniścaret //",
  "XXbsa048_u:113": "caturmaṇḍalametaddhi japennityaṃ samāhitaḥ /",
  "XXbsa048_u:114": "ahorātraṃ sadā jāpo mantriṇāṃ japasaṃkṣa(khya)yā //",
  "XXbsa048_u:115": "ekādirnavamadhye tu daśabhiryo na badhyate /",
  "XXbsa048_u:116": "tamabaddhaṃ vijānīyāt sa vetti paramaṃ padam //",
  "XXbsa048_u:117": "svaravyañjanavarṇāṃśca navasaṃkhyānuvartinaḥ /",
  "XXbsa048_u:118": "abaddhānyonyasaṃyogā yo vetti sa jagadruruḥ //",
  "XXbsa048_u:119": "yo buddhā(ddhvā)",
  "XXbsa048_u:120": "vāñcchayet siddhiṃ vimuktiphalasampadam /",
  "XXbsa048_u:121": "sa tadeva samāpnoti arūpo rūpavarjitam //",
  "XXbsa048_u:122": "bhūtāntena samāyuktaṃ kalādiṣoḍaśe sthitam /",
  "XXbsa048_u:123": "pañcapañcakasaṃyuktaṃ catusrayaniyojitam //",
  "XXbsa048_u:124": "sānusvāraṃ sadīrghaṃ ca guṇasaṃyogalopavat /",
  "XXbsa048_u:125": "hrasvaṃ samastavākyaṃ syānna cānekaṃ na caikakam //",
  "XXbsa048_u:126": "yakārārthena yatkiñcit kartavyaṃ siddhimicchatā /",
  "XXbsa048_u:127": "rephāditritayenaiva jagatkāryaṃ pravartate //",
  "XXbsa048_u:128": "ye varṇāḥ pṛṣṭhataḥ proktā abhimukhāśca ye punaḥ /",
  "XXbsa048_u:129": "strīpunnapuṃsakāste ca dhātvādiparikalpitāḥ //",
  "XXbsa048_u:130": "adha ūrdhvasamāyuktā jñātvā buddhyā niyojitāḥ /",
  "XXbsa048_u:131": "ṣaḍbhiruktaṃ catustrai(stryai)",
  "XXbsa048_u:132": "kānniḥsvabhāvaikabhāvajām //",
  "XXbsa048_u:133": "trā(tryā)dyādyarthe samāyoja(jya)",
  "XXbsa048_u:134": "tryadhvajñānaṃ tu jāyate /",
  "XXbsa048_u:135": "svapnendrajālava dvidhvā kuryājjagat tridhātuke //",
  "XXbsa048_u:136": "pratyāhāramidaṃ mantraṃ niḥsvabhāvasvabhāvajam /",
  "XXbsa048_u:137": "tataḥ pariṇataṃ rūpaṃ yad daivatopalambhakam //",
  "XXbsa048_u:138": "sāṃketikaṃ tritattvasthaṃ prakṛtijāpalakṣaṇam /",
  "XXbsa048_u:139": "anākhyeyamanuccāryaṃ bodhicittamidaṃ param //",
  "XXbsa048_u:140": "tadeva tritayaikaṃ syādanirgamamanāgamam /",
  "XXbsa048_u:141": "anirodhaḥ praśāntaśca śāśvatocchedavarjitam //",
  "XXbsa048_u:142": "trayadhvavidākṛtasaṃkalpamākāśābhedalakṣaṇam /",
  "XXbsa048_u:143": "pāramārthikamevedaṃ pratyātmavedyalakṣaṇam //",
  "XXbsa048_u:144": "sarvāsvapi kriyāścai(svai)",
  "XXbsa048_u:145": "va niṣadyādiṣu yogavit /",
  "XXbsa048_u:146": "anākhyeyamanuccāryaṃ tryadhvātītaṃ japet sadā //",
  "XXbsa048_u:147": "pāṇḍarādi japaḥ(pāḥ)",
  "XXbsa048_u:148": "proktāḥ pañcaviṃśacchatadvayam /",
  "XXbsa048_u:149": "caturbhirguṇitaṃ samyak caturyogaṃ śataṃ nava //",
  "XXbsa048_u:150": "navaśataṃ tu yad dṛṣṭaṃ caturviśatiparikramaiḥ /",
  "XXbsa048_u:151": "pratyutpādād bhavettatu dvyayutaṃ śataṣoḍaśam //",
  "XXbsa048_u:152": "taditthaṃ guhyasandhyāyāṃ sūkṣmayogaṃ prakāśitam /",
  "XXbsa048_u:153": "dhyānādhyayanavītaṃ tu tathāpi japa ucyate //",
  "XXbsa048_u:154": "akāraḥ sarvavarṇāgryo mahārthaḥ paramākṣaraḥ /",
  "XXbsa048_u:155": "mahāprāṇo hyanutpādo vāgudāhāravarjitaḥ /",
  "XXbsa048_u:156": "sarvābhilāpahetvagryaḥ sarvavāksuprabhāsvaraḥ // iti /",
  "XXbsa048_u:157": "jvalantaṃ dīpasadṛśaṃ hṛdi madhyamanāhatam /",
  "XXbsa048_u:158": "akṣaraṃ paramaṃ sūkṣmam akāraṃ paramaṃ prabhum // iti /",
  "XXbsa048_u:159": "dharmā ime śabdarutena vyākṛtā",
  "XXbsa048_u:160": "dharmaśca śabdaśca hi nātra labhyate /",
  "XXbsa048_u:161": "na caikatāṃ cāpyavatīrya dharmatām",
  "XXbsa048_u:162": "anuttarāṃ kṣāntivarāṃ spṛśiṣyate // iti /",
  "XXbsa048_u:163": "vāgvivekamelāvaṇasaṃśayaparicchedastṛtīyaḥ // 3 //",
  "XXbsa048_u:164": "4. caturthaḥ paricchedaḥ",
  "XXbsa048_u:165": "dūraṅgamekacaramaśarīraṃ guhāśayam /",
  "XXbsa048_u:166": "ye cittaṃ sanniveśayanti mucyante mārabandhanād // iti /",
  "XXbsa048_u:167": "pratītyotpadyate yadyadindriyairviṣayairmanaḥ //",
  "XXbsa048_u:168": "tanmanastvaśītikhyātasrakārastrāṇanārthataḥ // iti /",
  "XXbsa048_u:169": "saṃvittimātrakaṃ jñānamākāśavadalakṣaṇam /",
  "XXbsa048_u:170": "kintu tasya prabhedo 'sti sandhyārātridivātmanā //",
  "XXbsa048_u:171": "ālokālokabhāsau ca tathālokopalabdhakam /",
  "XXbsa048_u:172": "cittaṃ trividhamityuktamādhārastasya kathyate //",
  "XXbsa048_u:173": "vāyunā sūkṣmarūpeṇa jñānaṃ sanmiśratāṃ gatam //",
  "XXbsa048_u:174": "niḥsṛtyendriyamārgebhyo viṣayānavalambate //",
  "XXbsa048_u:175": "ābhāsena yadā yukto vāyurvāhanatāṃ gataḥ /",
  "XXbsa048_u:176": "tadā tatprakṛtiḥ sarvā astavyastā pravartate //",
  "XXbsa048_u:177": "yatra yatra sthito vāyustāṃ tāṃ prakṛtimudvaheta // iti /",
  "XXbsa048_u:178": "cittavivekasaṃśayamelāvaṇaparicchedaścaturthaḥ // 4 //",
  "XXbsa048_u:179": "5. pañcamaḥ paricchedaḥ",
  "XXbsa048_u:180": "payodharā yathā naike nānāsaṃsthānavarṇakāḥ /",
  "XXbsa048_u:181": "ubhdūtā gaganābhogāllayaṃ gacchanti tatra vai //",
  "XXbsa048_u:182": "evaṃprakṛtayaḥ sarvā ābhāsatrayahetukāḥ /",
  "XXbsa048_u:183": "nirviśya viṣayān kṛtsnān praviśanti prabhāsvaram //",
  "XXbsa048_u:184": "evaṃsvabhāvā vijñānādajñāna[paṭalāvṛtāḥ /",
  "XXbsa048_u:185": "kṛtvā śubhāśubhaṃ karma bhra]manti gatipañcake //",
  "XXbsa048_u:186": "ānantaryādikaṃ kṛtvā narakeṣu vipacyate /",
  "XXbsa048_u:187": "śubhaṃ dānādikaṃ kṛtvā [svargādiṣu mahīyate //",
  "XXbsa048_u:188": "ānantajanmasāhasraṃ] prāpya caivaṃ punaḥ punaḥ /",
  "XXbsa048_u:189": "pūrvakarmavipāko 'yamiti śocati mohataḥ //",
  "XXbsa048_u:190": "prakṛtyābhā[savidhinā kleśavantaśca ye janāḥ /",
  "XXbsa048_u:191": "etajjñātvā vimu]cyanti jñānino bhavapañjarāt // iti /",
  "XXbsa048_u:192": "yadi śūnyamidaṃ sarvamanutpannasvabhāvakam /",
  "XXbsa048_u:193": "kathaṃ karmātra saṃsāre sukhaduḥkhaṃ pravartate //",
  "XXbsa048_u:194": "ahaṅkāramamakāraistathārāgādibhirmalaiḥ /",
  "XXbsa048_u:195": "kalpitaṃ paratantreṇa duḥkhāt kliśyanti bāliśāḥ //",
  "XXbsa048_u:196": "cittamātramidaṃ sarvaṃ māyākārasamutthitam /",
  "XXbsa048_u:197": "tataḥ śubhāśubhaṃ karma tato janma śubhāśubham // iti /",
  "XXbsa048_u:198": "karmāntavibhāgamelāvaṇasaṃśayaparicchedaḥ pañcamaḥ // 5 //",
  "XXbsa048_u:199": "6. ṣaṣṭhaḥ paricchedaḥ /",
  "XXbsa048_u:200": "indrāyudhanibhaṃ kāyaṃ labhate tattvabhāvanāt // iti /",
  "XXbsa048_u:201": "skandhe ca dhātvāyatanendriyādau jñānadvaye tatra samaṃ sthite 'smin /",
  "XXbsa048_u:202": "śūnye mahattve sati yaḥ prasuptaḥ svapnaṃ prapaśyet khalu vātavegāt //",
  "XXbsa048_u:203": "svapne prabuddhe ca na cānyabhedaḥ saṃkalpayet svapnaphalābhilāṣī /",
  "XXbsa048_u:204": "rātriṃdivā svapnamupaiti jantuṃ mahīghanatve sucireṇa suptaḥ //",
  "XXbsa048_u:205": "phale na pakve kṛtakarmaṇaśca vāyuḥ punaḥ krāmati janmanīha /",
  "XXbsa048_u:206": "pakvaṃ phalaṃ syād gata eva vāyuḥ paratra śīghraṃ maraṇaṃ hi loke //",
  "XXbsa048_u:207": "yatha jinendro daśadigvyavasthito majjāsthimāṃsaṃ na ca tasya kāye /",
  "XXbsa048_u:208": "praveśayet sattvahitāya dhātunirmāṇakalpena karoti kṛtyam //",
  "XXbsa048_u:209": "evaṃ kramājjāgrati suptacittaḥ phalaṃ ca vāñchet savikalpajālam /",
  "XXbsa048_u:210": "svapnopamāste khalu sarvadharmā mṛṣāmṛṣāścāpyubhayorabhāvaḥ // iti /",
  "XXbsa048_u:211": "saṃvṛtisatyamelāvaṇasaṃśayaparicchedaḥ ṣaṣṭhaḥ // 6 //",
  "XXbsa048_u:212": "7. saptamaḥ paricchedaḥ",
  "XXbsa048_u:213": "yathā dīpo ghaṭāntaḥstho bāhyo naivāvabhāsate /",
  "XXbsa048_u:214": "bhinne tu taddhaṭe paścād dīpajvālābhibhāsate //",
  "XXbsa048_u:215": "svakāya eva hi ghaṭo dīpa eva hi tattvakam /",
  "XXbsa048_u:216": "guruvaktreṇa saṃbhinne buddhajñānaṃ sphuṭaṃ bhavet //",
  "XXbsa048_u:217": "gaganaṃ gaganobhdūtamākāśākāśaṃ sa paśyati /",
  "XXbsa048_u:218": "tathaiva hi gurorvaktrātprayogo 'yaṃ pradarśitaḥ // iti /",
  "XXbsa048_u:219": "dharmā ime śabdarutena vyākṛtā dharmaśca śabdaśca hi nātra labhyate /",
  "XXbsa048_u:220": "na caikatāṃ cāpyavatīrya dharmatāmanuttarāṃ kṣāntivarāṃ spṛśiṣyate // iti /",
  "XXbsa048_u:221": "namaste varadavajrāgrya bhūtakoṭe namo 'stu te /",
  "XXbsa048_u:222": "namaste śūnyatāgarbha buddhabodhe namo 'stu te //",
  "XXbsa048_u:223": "dadasva me mahācārya abhisaṃbodhidarśanam /",
  "XXbsa048_u:224": "sarvabuddhamahājñānaṃ sarvaśūnyamanuttaram //",
  "XXbsa048_u:225": "dadasva me mahāsattva svānubhāvaikalakṣaṇam /",
  "XXbsa048_u:226": "karmajanmavinirmuktamihaiva bodhimavāpnuyām //",
  "XXbsa048_u:227": "ta(tva)tpādapaṅkajaṃ muktvā nāstyanyaccharaṇaṃ prabho /",
  "XXbsa048_u:228": "tasmātprasīda buddhāgrya jagadvīra mahāmune //",
  "XXbsa048_u:229": "evaṃ stutvā tu taṃ divyamadhyeṣaṇavidhiṃ param /",
  "XXbsa048_u:230": "śiṣye kāruṇyamutpādya guruḥ śrīmān guṇodadhiḥ //",
  "XXbsa048_u:231": "prasannavadano bhūtvā sānukampaḥ praharṣitaḥ /",
  "XXbsa048_u:232": "śrāvayetsamayaṃ divyaṃ yogatantrobhdavaṃ param //",
  "XXbsa048_u:233": "tataḥ samāhitācāryo bodhicittaṃ niṣpādayet /",
  "XXbsa048_u:234": "kalaśe vātha śaṃkhe vā bodhicittaṃ nidhāya ca //",
  "XXbsa048_u:235": "tatastaṃ śiṣyamāhūya sarvabuddhairadhiṣṭhitam /",
  "XXbsa048_u:236": "arpayetsamayaṃ tasya jinamudrāsamanvitam //",
  "XXbsa048_u:237": "abhiṣeko hi dātavyo dvitīyenaiva vajriṇā /",
  "XXbsa048_u:238": "māṅgalyovduṣṭaśabdena vāditravividhasvanaiḥ //",
  "XXbsa048_u:239": "traidhātukābhiṣekeṇa śiṣyaḥ kṛtanatāñjaliḥ /",
  "XXbsa048_u:240": "anujñātaṃ tatastasya dadyāttatrapracoditaḥ //",
  "XXbsa048_u:241": "mālāsalilasaṃbuddhavajraghaṇṭātha darpaṇam /",
  "XXbsa048_u:242": "nāmācāryamanujñāta abhiṣekakramo hyayam //",
  "XXbsa048_u:243": "tataḥ samarpayet tasya bāhyābhisaṃbodhilakṣaṇam /",
  "XXbsa048_u:244": "saṃpradāye yadāvāptaṃ guruparvakramāgatam // iti /",
  "XXbsa048_u:245": "toye nirmalake nadīsarasi vā binduśca yo līnakaḥ /",
  "XXbsa048_u:246": "śuddhaṃ tatkramaśo 'nubhedagaditaṃ yogī smarennityaśaḥ /",
  "XXbsa048_u:247": "ādarśe hyanilakṣayaḥ kramagatastadvanna saṃprekṣyate",
  "XXbsa048_u:248": "piṇḍagrāha iti kramo vidhimatāmevaṃ samutprekṣyate //",
  "XXbsa048_u:249": "sarvāṅgabhāvanātītaṃ kalpanākalpavarjitam /",
  "XXbsa048_u:250": "mātrābindusamātītaṃ etanmaṇḍalamuttamam //",
  "XXbsa048_u:251": "viśatī(ti) yaḥ sarvabhāvānāṃ rūpārūpeṣu nirmalam /",
  "XXbsa048_u:252": "bodhitaścoditaṃ cittaṃ maṇḍalaṃ maṇḍalākṛtim //",
  "XXbsa048_u:253": "astīti nāstīti ubhe 'pi antā śuddhī aśuddhīti ime 'pi antā /",
  "XXbsa048_u:254": "tasmādubhe antavivarjayitvā madhye 'pi sthānaṃ na karoti paṇḍitaḥ // iti /",
  "XXbsa048_u:255": "ākāśānantamityarthaṃ sarvabhūtamahālayam /",
  "XXbsa048_u:256": "vibhūtiḥ śrīvibho rājā sarvāśāparipūrakaḥ //",
  "XXbsa048_u:257": "aho buddha aho buddha aho dharmasya deśanā /",
  "XXbsa048_u:258": "śuddhatattvārthaśuddhārtha bodhicitta namo 'stu te //",
  "XXbsa048_u:259": "paramārthasatyamelāvaṇasaṃśayaparicchedaḥ saptamaḥ // 7 //",
  "XXbsa048_u:260": "8. aṣṭamaḥ paricchedaḥ",
  "XXbsa048_u:261": "sthūlaṃ śabdamayaṃ prāhuḥ sūkṣmaṃ cittāmayantathā /",
  "XXbsa048_u:262": "cittayā rahitaṃ yat tad yogināṃ paramaṃ padam // iti /",
  "XXbsa048_u:263": "svasaṃvedyaṃ tu tattattvaṃ vaktuṃ nānyasya pāryate /",
  "XXbsa048_u:264": "bhaktibhāvanayā gamyaṃ na gamyaṃ cānyathā nu tat //",
  "XXbsa048_u:265": "jñātvā tattvaṃ tataḥ kṛtvā bhaktibhāvamaharniśam /",
  "XXbsa048_u:266": "tasmin paramanirvāṇe pade śānte hyanuttare //",
  "XXbsa048_u:267": "tatastadbhaktisāmarthyād bhāvanābalanirmitam /",
  "XXbsa048_u:268": "tasminnutpadyate rūpaṃ kimapyānandajaṃ param //",
  "XXbsa048_u:269": "dhagityākārasaṃbhūtaṃ sphuratsaṃhārākārakam /",
  "XXbsa048_u:270": "bhūrbhuvaḥsvaridaṃ sarvaṃ dyotayat sacarācaram //",
  "XXbsa048_u:271": "bhāvanābalasāmarthyāt prajñopāyātmakaṃ śivam /",
  "XXbsa048_u:272": "sarvakleśavinirmuktaṃ sarvalakṣaṇabhūṣitam //",
  "XXbsa048_u:273": "śūnyatājñānasaṃbhūtaṃ nirdvandvaṃ paramaṃ śivam /",
  "XXbsa048_u:274": "sarvākāravaropetaṃ grāhyagrāhakavarjitam //",
  "XXbsa048_u:275": "jñānaṃ māyopamaṃ śuddhaṃ svacchaṃ prakṛtinirmalam /",
  "XXbsa048_u:276": "śabdagandharasātītaṃ tathā sparśavivarjitam //",
  "XXbsa048_u:277": "dṛśyate paramekena samādhau jñānacakṣuṣā /",
  "XXbsa048_u:278": "chāyāmāyopamaṃ divyaṃ divyasaṃsthānasayutam //",
  "XXbsa048_u:279": "sphurajjñānormimālābhirvividhānekavigraham /",
  "XXbsa048_u:280": "indrāyudhanibhaṃ kāyaṃ labhante tattvabhāvakāḥ //",
  "XXbsa048_u:281": "bhāvanāyogasāmarthyāt samayānāṃ ca pālanāt /",
  "XXbsa048_u:282": "īdṛśaṃ prāpyate rūpaṃ na vācyaṃ yajjinairapi //",
  "XXbsa048_u:283": "yatra kāyo na vākcittaṃ sthānaṃ yatsarvagaṃ param /",
  "XXbsa048_u:284": "saṃpradāyavaśāt tatra svasya rūpaṃ vibhāvyate //",
  "XXbsa048_u:285": "aho suvismayakaramaho śāntamatīndriyam /",
  "XXbsa048_u:286": "aho paramagambhīraṃ buddhatvaṃ padamuttamam // iti /",
  "XXbsa048_u:287": "aho vajra aho vajra aho vajrasya deśanā /",
  "XXbsa048_u:288": "yatra na kāyavākcittaṃ tatra rūpaṃ vibhāvyate // iti /",
  "XXbsa048_u:289": "bhaṭṭārakapādenāpyuktam-",
  "XXbsa048_u:290": "śauśīryaṃ nāsti te kāye māṃsāsthirudhiraṃ na ca /",
  "XXbsa048_u:291": "indrāyudhamivākāśe kāyaṃ darśitavānasi //",
  "XXbsa048_u:292": "nāmayo nāśuciḥ kāye kṣuttṛṣṇāsaṃbhavau na ca /",
  "XXbsa048_u:293": "tvayā lokānuvṛttyarthaṃ darśitā laukikī kriyā // iti /",
  "XXbsa048_u:294": "sarvakalpasamuccaye 'pyāha-",
  "XXbsa048_u:295": "gṛhītvā hṛdayaṃ śuddhaṃ vajradehavibhāvanā /",
  "XXbsa048_u:296": "dṛḍhaṃ sāramasauśīryaṃ vajrakāyaṃ sa labdhavān // iti /",
  "XXbsa048_u:297": "khasamā virajā vararūpadharā aśarīra alakṣaṇa prajñasutā /",
  "XXbsa048_u:298": "sugambhīraguṇodadhi kāruṇikā dada mūrdhni pāṇi mama apratimā // iti /",
  "XXbsa048_u:299": "apratiṣṭhitanirvāṇadhātumelāvaṇasaṃśayaparicchedo 'ṣṭamaḥ // 8 //",
  "XXbsa048_u:300": "9. navamaḥ paricchedaḥ",
  "XXbsa048_u:301": "phalena hetumāmudrya phalamāmudrya hetunā /",
  "XXbsa048_u:302": "vibhāvyamanyathāsiddhiṃ kalpakoṭirna jāyate // iti /",
  "XXbsa048_u:303": "vajrasattvo mahārājaścodanīyo muhurmuhuḥ // iti /",
  "XXbsa048_u:304": "pādaprasārikaṃ muktvā tyaktvā saṃsārapeṭakam /",
  "XXbsa048_u:305": "sādhayed vajrasattvāgraṃ nityamudyuktamānasaḥ //",
  "XXbsa048_u:306": "kaukṛtyastyānamiddhādīn parityajya prayatnataḥ /",
  "XXbsa048_u:307": "anyathā naiva siddhiḥ syāt kalpakoṭiśatairapi // iti /",
  "XXbsa048_u:308": "bhikṣubhāve sthitā ye 'tra ye tu tarkaratā narāḥ /",
  "XXbsa048_u:309": "vṛddhabhāve sthitā ye tu teṣāṃ tattvaṃ na deśayet // iti /",
  "XXbsa048_u:310": "upāyarahitaṃ jñānaṃ śikṣā cāpi hi deśitā /",
  "XXbsa048_u:311": "śrāvakāṇāṃ mahāvīra avatā(dhā)",
  "XXbsa048_u:312": "raya teṣu vai //",
  "XXbsa048_u:313": "mūlasūtre 'pyāha-",
  "XXbsa048_u:314": "daśakuśalān karmapathānicchanti jñānavarjitāḥ // iti /",
  "XXbsa048_u:315": "śrāvakayānamaśikṣatha bhikṣo bodhicariyata tatra carīye /",
  "XXbsa048_u:316": "bodhicarīṃ cara buddhaguṇeṣu eṣa nidānabhaviṣya svayaṃbhūḥ // iti /",
  "XXbsa048_u:317": "duṣkarairniyamaistīrvrairmūrtiḥ śuṣyati duḥkhitā /",
  "XXbsa048_u:318": "duḥkhād vikṣipyate cittaṃ vikṣepāt siddhiranyathā // iti /",
  "XXbsa048_u:319": "mūlasūtre 'pyāha-",
  "XXbsa048_u:320": "duṣkarairniyamaistīvraiḥ sevyamāno na siddhyati /",
  "XXbsa048_u:321": "sarvakāmopabhogaistu sevayaṃścāśu siddhyati // iti /",
  "XXbsa048_u:322": "rāgo dveṣaśca mohaśca traya ete viṣaṅgatāḥ /",
  "XXbsa048_u:323": "viṣatvamupayāntyeva viṣameṇa tu sevitā //",
  "XXbsa048_u:324": "amṛtatvaṃ punaryānti,",
  "XXbsa048_u:325": "amṛtena tu sevitāḥ // iti /",
  "XXbsa048_u:326": "badhyati yena jaḍaḥ parimucyati tena budhaḥ /",
  "XXbsa048_u:327": "bodhivibhāvanayā viparītamidaṃ sakalam //",
  "XXbsa048_u:328": "yena mūḍhāḥ prabadhyante śīryante rauravāntike /",
  "XXbsa048_u:329": "taireva hi vimucyante sukhaṃ prajñābalena tu // iti /",
  "XXbsa048_u:330": "athātaḥ saṃpravakṣyāmi sarvato viśvamuttamam /",
  "XXbsa048_u:331": "sarvabuddhasamāyogaḍākinījālasaṃvaram //",
  "XXbsa048_u:332": "rahasye parame ramye sarvātmani sadā sthitaḥ /",
  "XXbsa048_u:333": "sarvabuddhamayaḥ śrīmān vajrasattvodayaḥ sukhaḥ //",
  "XXbsa048_u:334": "tathāgatamahādivyaratnajālādyalaṅkṛtam /",
  "XXbsa048_u:335": "tato ghaṇṭāvasaṃsaktavitānavitatojjvale //",
  "XXbsa048_u:336": "vajragītiṃ ca pūjāṃ ca gītavādyairvikurvitam /",
  "XXbsa048_u:337": "puṣpadhūpādiyogena dīpagandhādibhistathā //",
  "XXbsa048_u:338": "prasādhayanti bhavane sodyānādiṣu vā punaḥ /",
  "XXbsa048_u:339": "sarvabuddhasamāyogaḍākinījālasaṃvaram //",
  "XXbsa048_u:340": "tatrāsanaṃ niveśyādau mṛdusaṃsparśajaṃ sukham /",
  "XXbsa048_u:341": "viśvapadmapaṭacchannaṃ sarvaśuddhāsanaṃ hi tat //",
  "XXbsa048_u:342": "sarvabuddhasamāyogaṃ yogeśvaravikurvitam /",
  "XXbsa048_u:343": "śrīvajrasattvarūpāstu vikurvanti hi yatra(tattu) vai //",
  "XXbsa048_u:344": "sarvadhātumayī(yo)",
  "XXbsa048_u:345": "vāpi jīvamūlamayastathā /",
  "XXbsa048_u:346": "svādhidaivatpratimukhaiḥ siddhimudrāpravartanam //",
  "XXbsa048_u:347": "niṣiktāṃ ghaṭitāṃ vāpi(bhi)",
  "XXbsa048_u:348": "saṃskṛtāṃ vā sucitritām /",
  "XXbsa048_u:349": "vicitrapratibimbāṃ ca cinhamudrāṃ prakalpayet //",
  "XXbsa048_u:350": "tadāsaneṣu prāṇasarvān yathāsthānaṃ hi vinyaset /",
  "XXbsa048_u:351": "caturasraṃ caturdvāraṃ catustoraṇamaṇḍitam /",
  "XXbsa048_u:352": "vajraratnapadmādi tu dvārapālena yojayet //",
  "XXbsa048_u:353": "svādhidaivatpratimukhaiḥ suprasādhitayoṣitam /",
  "XXbsa048_u:354": "svamudrācinhasubhagāṃ kalpayed gaṇamaṇḍalam //",
  "XXbsa048_u:355": "caturasraṃ caturdvāraṃ catustoraṇamaṇḍitam /",
  "XXbsa048_u:356": "catuḥsūtrasamāyuktamaṣṭastambhopaśobhitam //",
  "XXbsa048_u:357": "hārārddhahāraracitaṃ paṭṭasragdāmabhūṣitam /",
  "XXbsa048_u:358": "ghaṇṭāpatākasaṃśobhaṃ cāmarādivibhūṣitam //",
  "XXbsa048_u:359": "candrārddhavajrakoṇaṃ ca dvāraniryūhasandhiṣu /",
  "XXbsa048_u:360": "patvi(kṣi)ṇīkramaśīrṣādivicitra paṭamaṇḍitam //",
  "XXbsa048_u:361": "sarvadevyupabhogaistu sevyamānairyathāsukham /",
  "XXbsa048_u:362": "svādhidaivatayogena svamātmānaṃ prapūjayet //",
  "XXbsa048_u:363": "pūjyate 'nuyogena sarvayogasukhena tu /",
  "XXbsa048_u:364": "samāsvādayamānastvatiyogena siddhyati //",
  "XXbsa048_u:365": "anena sarvabuddhātmā rasāyanasukhena tu /",
  "XXbsa048_u:366": "siddhyet śrīvajrasattvāyuryauvanārogyasatsukham //",
  "XXbsa048_u:367": "sarvabuddhamahākāyaḥ sarvabuddhasarasvatī /",
  "XXbsa048_u:368": "sarvabuddhamahācittaḥ sarvabuddhamahāmahaḥ //",
  "XXbsa048_u:369": "sarvabuddhamahārājā sarvavajradharādhipaḥ /",
  "XXbsa048_u:370": "sarvalokeśvarapatiḥ sarvaratnādhipeśvaraḥ //",
  "XXbsa048_u:371": "tābhiḥ saṃramyamāṇastu yātyutpattiṃ tu gacchataḥ /",
  "XXbsa048_u:372": "sarvadevīmahāsidhya(ddha)",
  "XXbsa048_u:373": "ścakravartī prasidhyati // iti /",
  "XXbsa048_u:374": "pratyahaṃ pratimāsaṃ vā pratisaṃvatsaraṃ tathā /",
  "XXbsa048_u:375": "yathādhiṣṭhānato vāpi nāṭayed buddhasaṃvaram // iti /",
  "XXbsa048_u:376": "utthito vā niṣaṇṇo vā caṃkraman vā yathāsthitaḥ /",
  "XXbsa048_u:377": "praharṣan vā jalpan vā yatra tatra yathā tathā //",
  "XXbsa048_u:378": "yadyadindriyamārgatvaṃ yāyāttattatsvabhāvataḥ /",
  "XXbsa048_u:379": "asamāhitayogena sarvabuddhamayaṃ vahet //",
  "XXbsa048_u:380": "khasamaṃ khasamākāramaparyantasāgaropamam /",
  "XXbsa048_u:381": "rāgadharmanayo dveṣo vilāsaḥ krīḍāvistaraḥ //",
  "XXbsa048_u:382": "gṛhītaṃ vastumātraṃ ca śiṣyabodhanakāraṇāt /",
  "XXbsa048_u:383": "kati janmāntaraṃ vaktuṃ sahyate rāgadeśanā //",
  "XXbsa048_u:384": "śrīsarvabuddhasamāyogaḍākinījālasaṃvaranyāyena bodhisattvacaritadharmodayābhisaṃbodhiprapañcatāmelāvaṇa-saṃśayaparicchedo navamaḥ // 9 //",
  "XXbsa048_u:385": "10. daśamaḥ paricchedaḥ",
  "XXbsa048_u:386": "mahāṭavīpradeśeṣu phalapuṣpādyalaṅkṛte /",
  "XXbsa048_u:387": "parvate vijane sādhyamidaṃ dhyānasamuccayam //",
  "XXbsa048_u:388": "sevayan kāmaguṇān pañca jñānārthirāgiṇaḥ sadā // iti /",
  "XXbsa048_u:389": "kāyavākcittavajrāṇāṃ kāyavākcittabhāvanam /",
  "XXbsa048_u:390": "svarūpeṇaiva tatkāryaṃ laghusiddhiravāpyate //",
  "XXbsa048_u:391": "jaṭāmukuṭadharaṃ bimbaṃ sitavarṇanibhaṃ mahat /",
  "XXbsa048_u:392": "kārayed vidhivat sarvaṃ mantrasaṃvarasaṃvṛtam //",
  "XXbsa048_u:393": "ṣoḍaśābdikāṃ gṛhya sarvālaṅkārabhūṣitām /",
  "XXbsa048_u:394": "cāruvaktrāṃ viśālākṣīṃ prāpya vidyāvrataṃ caret //",
  "XXbsa048_u:395": "locanāpadasaṃbhogairvajracinhaistu bhāvayet /",
  "XXbsa048_u:396": "mudrāmantravidhānajñāṃ mantratantrasuśikṣitām //",
  "XXbsa048_u:397": "kuryāt tāthāgatīṃ bhāryāṃ buddhabodhipratiṣṭhitām /",
  "XXbsa048_u:398": "guhyapūjāṃ prakurvīta catuḥsattvāṃ(sandhyaṃ) mahāvratī //",
  "XXbsa048_u:399": "kandamūlaphalaiḥ sarvaṃ bhojyabhakṣyaṃ samārabhet /",
  "XXbsa048_u:400": "evaṃ buddho bhavecchīghraṃ mahājñānodadhiḥ prabhuḥ //",
  "XXbsa048_u:401": "ṣaṇmāsenaiva tatsarvaṃ prāpnuyānnātra saṃśayaḥ /",
  "XXbsa048_u:402": "vane bhikṣāṃ bhramennityaṃ sādhako dṛḍhaniścayaḥ //",
  "XXbsa048_u:403": "dadanti te bhaya[tra]stā bhojanaṃ divyamaṇḍitam /",
  "XXbsa048_u:404": "atikramanti yadi vajrātmā nāśaṃ vajrākṣaraṃ bhavet //",
  "XXbsa048_u:405": "surīṃ nāgīṃ mahāyakṣīmasurīṃ mānuṣīmapi /",
  "XXbsa048_u:406": "prāpya vidyāvrataṃ kāryaṃ trivajrajñānasevitam // iti /",
  "XXbsa048_u:407": "dvayendriyasamāpattyā vyāyāmavidhirantare /",
  "XXbsa048_u:408": "harṣacittaṃ muneḥ siddhau mahāsukhamiti smṛtam //",
  "XXbsa048_u:409": "niṣprapañcacaryāmelāvaṇasaṃśayaparicchedo daśamaḥ // 10 //",
  "XXbsa048_u:410": "11. ekādaśaḥ paricchedaḥ",
  "XXbsa048_u:411": "parvateṣu vivikteṣu nadīprasravaṇeṣu ca /",
  "XXbsa048_u:412": "śmaśānādiṣvapi kāryamidaṃ dhyānasamuccayam //",
  "XXbsa048_u:413": "prayogādīṃśca tattvena varjayet tattvavit sadā /",
  "XXbsa048_u:414": "vajrasattvadahaṃkāraṃ muktvā nānyatra kārayet //",
  "XXbsa048_u:415": "prayogā api na budhyante śuddhatattve vyavasthite /",
  "XXbsa048_u:416": "nairātmyapadayogena yāvattat pratyavekṣyate //",
  "XXbsa048_u:417": "niḥsvabhāvapadasthasya divyopāyayutasya ca /",
  "XXbsa048_u:418": "siddhyate nirvicāreṇa yatkiñcit kalpacoditam //",
  "XXbsa048_u:419": "bhāvanāyogasāmarthyāt svayamevopatiṣṭhate /",
  "XXbsa048_u:420": "tatsarvaṃ kṣaṇamātreṇa yatkiñcit siddhilakṣaṇam //",
  "XXbsa048_u:421": "rūpādyādhyātmikān dharmān paśyet vipaśyanocyate /",
  "XXbsa048_u:422": "akṣobhyādiyathāsaṃkhyaṃ kalpayet śamatho bhavet //",
  "XXbsa048_u:423": "anayorniḥsvabhāvatvāt tathatāśāntasaṃjñakam /",
  "XXbsa048_u:424": "tathatāmaṇḍale yogī sarvabuddhān praveśayed // iti /",
  "XXbsa048_u:425": "nirvāṇāgnimahāgore bhasmaśo 'pi na mucyate /",
  "XXbsa048_u:426": "na tatra vidyate tattvaṃ nendriyārthā na dhātavaḥ //",
  "XXbsa048_u:427": "nirvikalpo yadā viraḥ sthitiṃ hitvā tu laukikīm /",
  "XXbsa048_u:428": "ācaret sarvakāryāṇi buddhāḥ paśyanti tat tadā //",
  "XXbsa048_u:429": "bālavadvicaredyuktyā sarvataśchinnasaṃśayaḥ /",
  "XXbsa048_u:430": "nirābhogo yadā yogī tadā varṣanti saṃpadaḥ //",
  "XXbsa048_u:431": "aśeṣapāpayuktānāṃ mohāvaraṇasusthitāḥ /",
  "XXbsa048_u:432": "unmattavratayogena ṣaṇmāsādamoghasiddhayaḥ //",
  "XXbsa048_u:433": "sarvabuddhāna svayaṃ paśyet sarvakāmaiḥ prapūryate /",
  "XXbsa048_u:434": "na kṣīṇo na ca hānitvaṃ svecchāyurjāyate vapuḥ //",
  "XXbsa048_u:435": "anuttarāṃ parāṃ bodhiṃ saṃprāpnotyaprayatnataḥ /",
  "XXbsa048_u:436": "vinā yatnena sidhyanti sarvakāmasukhotsukāḥ //",
  "XXbsa048_u:437": "gambhīrapadaṃ nityaṃ gacchet tiṣṭhan niṣaṇṇakaḥ /",
  "XXbsa048_u:438": "prabhāsvarajñānakauśalyād yogināṃ lakṣaṇaṃ sadā //",
  "XXbsa048_u:439": "anena dhyānayogena cittaratnaṃ dṛḍhībhavet /",
  "XXbsa048_u:440": "adhiṣṭhānaṃ ca kurvanti buddhā bodhipratiṣṭhitāḥ //",
  "XXbsa048_u:441": "evaṃ bhūtvā niviṣṭastu bhāvayed bhāvatatparaḥ /",
  "XXbsa048_u:442": "yāvanna khidyate cittaṃ samāhitamanāḥ sudhīḥ //",
  "XXbsa048_u:443": "khinnastu paryaṭet paścādyathārucitaceṣṭitaḥ /",
  "XXbsa048_u:444": "bhāvayedvipulāṃ bodhimīṣadunmīlitekṣaṇaḥ //",
  "XXbsa048_u:445": "hasan jalpan kvacittiṣṭhan kvacitkuryāt pravartanam //",
  "XXbsa048_u:446": "bhāvanāsaktacittastu yathā khedo na jāyate //",
  "XXbsa048_u:447": "evaṃ samādhiyuktasya nirvikalpasya mantriṇaḥ /",
  "XXbsa048_u:448": "kālāvadhiṃ parityajya siddhyate 'nuttaraṃ padam // iti /",
  "XXbsa048_u:449": "sūkṣmarūpaṃ laghusparśaṃ vyāptisaṃprāptimeva ca /",
  "XXbsa048_u:450": "prakāśaṃ caiva sthairyaṃ ca vaśitvaṃ kāmāvasānikam // iti /",
  "XXbsa048_u:451": "bodhijñānāgrasaṃprāptaṃ paśyati buddhasuprabham /",
  "XXbsa048_u:452": "buddhasaṃbhogakāyaṃ ca ātmānaṃ laghu paśyati //",
  "XXbsa048_u:453": "traidhātukamahāsattvaiḥ pūjyamānaṃ sa paśyati /",
  "XXbsa048_u:454": "buddhaiśca bodhisattvaiśca pañcakāmaguṇairdhruvam //",
  "XXbsa048_u:455": "pūjitaṃ paśyate nityaṃ mahajñānā grasambhavam /",
  "XXbsa048_u:456": "vajrasattvaṃ mahābimbaṃ vajradharmaṃ mahāyaśam //",
  "XXbsa048_u:457": "svabimbaṃ paśyate svapne guhyavajramahāyaśāḥ /",
  "XXbsa048_u:458": "praṇamanti mahābuddhā bodhisattvāśca vajriṇaḥ //",
  "XXbsa048_u:459": "drakṣyanti īdṛśān svapnān kāyavākcittasiddhidān /",
  "XXbsa048_u:460": "sarvalaṅkārasampūrṇāṃ surakanyāṃ manoramām //",
  "XXbsa048_u:461": "dārakaṃ dārikāṃ paśyan sa siddhimadhigacchati /",
  "XXbsa048_u:462": "daśadiksarvabuddhānāṃ kṣetrasthaṃ paśyati dhruvam //",
  "XXbsa048_u:463": "dadanti hṛṣṭacittātmā dharmagañjaṃ manoramam /",
  "XXbsa048_u:464": "dharmacakragataṃ kāyaṃ sarvasattvaparivṛtam //",
  "XXbsa048_u:465": "paśyate yogasamaye dhyānavajrapratiṣṭhitaḥ // iti /",
  "XXbsa048_u:466": "nāpaneyamataḥ kiñcit prakṣeptavyaṃ na kiñcan /",
  "XXbsa048_u:467": "draṣṭavyaṃ bhūtato bhūtaṃ bhūtadarśī vimucyate // iti /",
  "XXbsa048_u:468": "uktaṃ ca suvarṇaprabhāsasūtre-",
  "XXbsa048_u:469": "na buddhaḥ parinirvāti na dharmaḥ parihīyate /",
  "XXbsa048_u:470": "sattvānāṃ paripākāya parinirvāṇaṃ nidarśayet //",
  "XXbsa048_u:471": "laṅkāvatārasūtre 'pyuktam-",
  "XXbsa048_u:472": "na hyatrotpadyate kiñcit pratyayairna nirudhyate /",
  "XXbsa048_u:473": "utpadyante nirudhyante pratyayā eva kalpitāḥ //",
  "XXbsa048_u:474": "ata uktam-",
  "XXbsa048_u:475": "yena yena hi bhāvena manaḥ saṃyujyate nṛṇām /",
  "XXbsa048_u:476": "tena tanmayatāṃ yāti viśvarūpo maṇiryathā //",
  "XXbsa048_u:477": "utpattiryat saṃvṛtisatyametad mṛtyurhi nāma paramārthasatyam /",
  "XXbsa048_u:478": "kramadvayasyāsya gurukṛpāto jñātā bhaved yaḥ sa bhaviṣyabuddhaḥ //",
  "XXbsa048_u:479": "satyadvayasyādvayavatpraveśo 'nucchedarūpo 'pyaviśeṣa eva /",
  "XXbsa048_u:480": "ekatvamevāstyanayordvayoriti vijñāyate yena vimukta eṣaḥ //",
  "XXbsa048_u:481": "girīndramūrdhnaḥ prapatet tu kaścid neccheccyutiṃ sa cyavate tathāpi /",
  "XXbsa048_u:482": "guruprasādādvihitopadeśād necchedvimuktiṃ sa tathāpi muktaḥ //",
  "XXbsa048_u:483": "matvā sattveṣu tattvādhigamakṣamatābhāvamālokya loke",
  "XXbsa048_u:484": "uttālābdhitaraṅgabhaṅgavikalāddīpasphuliṅgādiva /",
  "XXbsa048_u:485": "kiñcit kiñcidupetya saṃcitavatā grantho mayāyaṃ kṛto",
  "XXbsa048_u:486": "ye vai saṃvṛtisatyabhītasubhagāsteṣāmalāto bhavet //",
  "XXbsa048_u:487": "atyantaniṣprapañcacaryāmelāvaṇasaṃśayapariccheda ekādaśaḥ //",
  "XXbsa048_u:488": "samāpto 'yaṃ caryāmelāvaṇapradīpaḥ //",
  "XXbsa048_u:489": "kṛtirīyaṃ mahācārya-āryadevapādānām //"
}