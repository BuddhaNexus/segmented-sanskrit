{
    "XXbsa046_u:0_0": "Yogāvatāraḥ",
    "XXbsa046_u:1_0": "namastārāyai",
    "XXbsa046_u:2_0": "śrutvā śāstramudāraṃ niścitya pāramārthikaṃ tattvam /",
    "XXbsa046_u:2_1": "mṛdvāsanopaviṣṭaḥ saśraddho yogamārabhed [yogī] // 1 //",
    "XXbsa046_u:3_0": "grāhyagrāhakamubhayaṃ nobhayamahameva nirvṛtirmagna iti /",
    "XXbsa046_u:3_1": "bahuvidhavikalpajālaṃ pravijñāya manaḥsamāpattiḥ // 2 //",
    "XXbsa046_u:4_0": "jñeyaṃ vilokya sakalaṃ mā yogameva nirbhāsam /",
    "XXbsa046_u:4_1": "pravivācye dehe yat tattathatājñānavajreṇa // 3 //",
    "XXbsa046_u:5_0": "sarvākāravivarjitamādyantavibhāgarahitamavikalpam /",
    "XXbsa046_u:5_1": "nimarlasahasradīdhitinirbhinnameti sarvaṃ gaganamiva // 4 //",
    "XXbsa046_u:6_0": "svākāramātraśeṣaṃ paśyati cittaṃ svamādyanutpannam /",
    "XXbsa046_u:6_1": "yenāpi paśyatīdaṃ tadapi tathaivāvalokayati // 5 //",
    "XXbsa046_u:7_0": "so 'nupalambho 'cittaṃ tathatājñānaṃ tatkoṭiñca /",
    "XXbsa046_u:7_1": "evaṃ tamaso 'bhyāsāt prajñāveditanirodhamāpnoti // 6 //",
    "XXbsa046_u:8_0": "tābhiryukto yogī sattvārthamanekadhā kurute /",
    "XXbsa046_u:8_1": "asmin pariniṣpanne tiṣṭhati yogī sadāryamadhvānam // 7 //",
    "XXbsa046_u:9_0": "............danaghavāyau niṣkampyaṃ kleśamārādyaiḥ /",
    "XXbsa046_u:9_1": "prajñāpāramitāṃ vāsmin sarvadā pravṛttasya // 8 //",
    "XXbsa046_u:10_0": "siddhyantyanye bahavaḥ samādhiyogadānarāgādyāḥ // 9 //",
    "XXbsa046_u:11_0": "// yogāvatāraḥ samāptaḥ //",
    "XXbsa046_u:12_0": "// kṛtiriyamāryadig nāgapādānāmiti //"
}