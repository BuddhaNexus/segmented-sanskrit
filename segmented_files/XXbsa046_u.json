{
  "XXbsa046_u:0": "Yogāvatāraḥ",
  "XXbsa046_u:1": "namastārāyai",
  "XXbsa046_u:2": "śrutvā śāstramudāraṃ niścitya pāramārthikaṃ tattvam /",
  "XXbsa046_u:3": "mṛdvāsanopaviṣṭaḥ saśraddho yogamārabhed [yogī] // 1 //",
  "XXbsa046_u:4": "grāhyagrāhakamubhayaṃ nobhayamahameva nirvṛtirmagna iti /",
  "XXbsa046_u:5": "bahuvidhavikalpajālaṃ pravijñāya manaḥsamāpattiḥ // 2 //",
  "XXbsa046_u:6": "jñeyaṃ vilokya sakalaṃ mā yogameva nirbhāsam /",
  "XXbsa046_u:7": "pravivācye dehe yat tattathatājñānavajreṇa // 3 //",
  "XXbsa046_u:8": "sarvākāravivarjitamādyantavibhāgarahitamavikalpam /",
  "XXbsa046_u:9": "nimarlasahasradīdhitinirbhinnameti sarvaṃ gaganamiva // 4 //",
  "XXbsa046_u:10": "svākāramātraśeṣaṃ paśyati cittaṃ svamādyanutpannam /",
  "XXbsa046_u:11": "yenāpi paśyatīdaṃ tadapi tathaivāvalokayati // 5 //",
  "XXbsa046_u:12": "so 'nupalambho 'cittaṃ tathatājñānaṃ tatkoṭiñca /",
  "XXbsa046_u:13": "evaṃ tamaso 'bhyāsāt prajñāveditanirodhamāpnoti // 6 //",
  "XXbsa046_u:14": "tābhiryukto yogī sattvārthamanekadhā kurute /",
  "XXbsa046_u:15": "asmin pariniṣpanne tiṣṭhati yogī sadāryamadhvānam // 7 //",
  "XXbsa046_u:16": "............danaghavāyau niṣkampyaṃ kleśamārādyaiḥ /",
  "XXbsa046_u:17": "prajñāpāramitāṃ vāsmin sarvadā pravṛttasya // 8 //",
  "XXbsa046_u:18": "siddhyantyanye bahavaḥ samādhiyogadānarāgādyāḥ // 9 //",
  "XXbsa046_u:19": "// yogāvatāraḥ samāptaḥ //",
  "XXbsa046_u:20": "// kṛtiriyamāryadig nāgapādānāmiti //"
}