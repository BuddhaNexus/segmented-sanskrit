{
    "SA11bsa008_u:0_0": "Garbhasaṅgrahaḥ / (Gs)",
    "SA11bsa008_u:1_0": "namo mahākāruṇikāya /",
    "SA11bsa008_u:gs_1_0": "trailokyaduḥkhasindhūnāṃ karmabhyaḥ kṣubdhavīcayaḥ /",
    "SA11bsa008_u:gs_1_1": "kuśalākuśalādibhyaḥ sāsravebhyo viniḥsṛtāḥ //",
    "SA11bsa008_u:gs_2_0": "rāgadveṣāditastāni jātāni kleśahetutaḥ /",
    "SA11bsa008_u:gs_2_1": "teṣāmudbhavahetuścāpīṣṭāniṣṭādikastathā //",
    "SA11bsa008_u:gs_3_0": "dvaidhagrahaṇato jātaḥ padārthagrāhakagrahāḥ /",
    "SA11bsa008_u:gs_3_1": "nityavibhvaikatādyāśca samastotpādahetavaḥ //",
    "SA11bsa008_u:gs_4_0": "bhāgyavān puruṣastasmāt muktikāṃkṣī parātmanoḥ /",
    "SA11bsa008_u:gs_4_1": "pratītyādisuyuktīnām abhyāsairvinivārayet //",
    "SA11bsa008_u:gs_5_0": "bhāvānāṃ grahaṇaṃ tāvat dharmān bāhyāntarākhilān /",
    "SA11bsa008_u:gs_5_1": "sarvalakṣaṇahīnena cākāśena samaṃ bhajet //",
    "SA11bsa008_u:gs_6_0": "vastugrahābhibhūtaṃ tu lakṣyīkṛtyākhilaṃ jagat /",
    "SA11bsa008_u:gs_6_1": "duḥkhasāgarasaṃśoṣimahākāruṇyapūrvakam //",
    "SA11bsa008_u:gs_7_0": "svaparārthabhavaṃ ratnaṃ bodhicittaṃ prabhāvayet /",
    "SA11bsa008_u:gs_7_1": "bodhicaryāmahāvīciṣaṭpāramitādikam //",
    "SA11bsa008_u:gs_8_0": "dhyānavyutthānayogena pañcamārgaiḥ kramād vrajet /",
    "SA11bsa008_u:gs_8_1": "dvividhāvaraṇaṃ chittvā dvau saṃbhārau prapūrya ca //",
    "SA11bsa008_u:gs_9_0": "trikāyaphalamāptavyaṃ trikāyāpteśca lakṣaṇam /",
    "SA11bsa008_u:gs_9_1": "nabhovacchūnyatāyāścānābhogakaruṇāmbudāt //",
    "SA11bsa008_u:gs_10_0": "dvikāyāmṛtadhārābhirātridhātu sadārdrayan /",
    "SA11bsa008_u:gs_10_1": "bodhimaṇḍasubījebhyaḥ puṇyaśasyāni pācayet //",
    "SA11bsa008_u:gs_11_0": "hṛdayaṃ sarvabuddhānāṃ garbhasaṅgraha ityayam /",
    "SA11bsa008_u:gs_11_1": "kālāntyādalpamāyuṣyaṃ bahurogāścālpabhogitā //",
    "SA11bsa008_u:gs_12_0": "durhetubahuvighnaiśca ciraṃ sthātumaśaktitaḥ /",
    "SA11bsa008_u:gs_12_1": "padānucchedaśakyatvāt sanmitraṃ hi samāśrayet //",
    "SA11bsa008_u:gs_13_0": "atyantavīryacittena prapātaṃ smaratā bhṛśam /",
    "SA11bsa008_u:gs_13_1": "saṅgṛhīto 'ñjasā garbho moktuṃ svaṃ ca paraṃ tathā //",
    "SA11bsa008_u:gs_14_0": "snehainaitatkṛtātpuṇyāt sattvāḥ sarve 'pi durbhagāḥ /",
    "SA11bsa008_u:gs_14_1": "bodhicittamayā bhūtvā garbhaṃ gṛhṇantu cāñjasā //",
    "SA11bsa008_u:2_0": "garbhasaṅgraho nāma mahācārya-dīpaṅkaraśrījñānaviracitaḥ samāptaḥ //"
}