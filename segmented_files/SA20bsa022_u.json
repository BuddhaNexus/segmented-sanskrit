{
  "SA20bsa022_u:0_0": "Viṃśikāvṛttiḥ (Vvṛ)",
  "SA20bsa022_u:vvr_1_0": "vijñaptimātramevedamasadarthāvabhāsanāt /",
  "SA20bsa022_u:vvr_1_1": "yadvat taimirikasyāsatkeśoṇḍrakādidarśanaṃ //",
  "SA20bsa022_u:vvr_2_0": "na deśakālaniyamaḥ santānāniyamo na ca /",
  "SA20bsa022_u:vvr_2_1": "na ca kṛtyakriyā yuktā vijñaptiryadi nārthataḥ //",
  "SA20bsa022_u:vvr_3_0": "deśādiniyamaḥ siddhaḥ svapnavat pretavatpunaḥ /",
  "SA20bsa022_u:vvr_3_1": "santānāniyamaḥ sarvaiḥ pūyanadyādidarśane //",
  "SA20bsa022_u:vvr_4_0": "svapnopaghātavatkṛtyakriyā narakavatpunaḥ /",
  "SA20bsa022_u:vvr_4_1": "sarvaṃ narakapālādidarśane taiśca bādhane //",
  "SA20bsa022_u:vvr_5_0": "tiraścāṃ sambhavaḥ svarge yathā ca narake tathā /",
  "SA20bsa022_u:vvr_5_1": "na pretānāṃ yatastajjaṃ duḥkhaṃ nānubhavanti te //",
  "SA20bsa022_u:vvr_6_0": "yadi tatkarmabhistatra bhūtānāṃ sambhavastathā",
  "SA20bsa022_u:vvr_6_1": "iṣyate pariṇāmaśca kiṃ vijñānasya neṣyate //",
  "SA20bsa022_u:vvr_7_0": "karmaṇo vāsanānyatra phalamanyatra kalpyate /",
  "SA20bsa022_u:vvr_7_1": "tatraiva neṣyate yatra vāsanā kiṃ nu kāraṇaṃ //",
  "SA20bsa022_u:vvr_8_0": "rūpādyāyatanāstitvaṃ tadvineyajanaṃ prati /",
  "SA20bsa022_u:vvr_8_1": "abhiprāyavaśāduktamupapādukasattvavat //",
  "SA20bsa022_u:vvr_9_0": "yataḥ svabījādvijñaptiryadābhāsā pravartate /",
  "SA20bsa022_u:vvr_9_1": "dvividhāyatanatvena te tasyā munirabravīt //",
  "SA20bsa022_u:vvr_10_0": "tathā pudgalanairātmyapraveśo hi anyathā punaḥ /",
  "SA20bsa022_u:vvr_10_1": "deśanā dharmanairātmyapraveśaḥ kalpitātmanā //",
  "SA20bsa022_u:vvr_11_0": "na tadekaṃ na cānekaṃ viṣayaḥ paramāṇuśaḥ /",
  "SA20bsa022_u:vvr_11_1": "na ca te saṃhatā yasmātparamāṇurna sidhyati //",
  "SA20bsa022_u:vvr_12_0": "ṣaṭkena yugapadyogātparamāṇoḥ ṣaḍaṃśatā /",
  "SA20bsa022_u:vvr_12_1": "ṣaṇṇāṃ samānadeśatvātpiṇḍaḥ syādaṇumātrakaḥ //",
  "SA20bsa022_u:vvr_13_0": "paramāṇorasaṃyoge tatsaṅghāte 'sti kasya saḥ /",
  "SA20bsa022_u:vvr_13_1": "na cānavayavatvena tatsaṃyogād na sidhyati //",
  "SA20bsa022_u:vvr_14_0": "dibhāgabhedo yasyāsti tasyaikatvaṃ na yujyate /",
  "SA20bsa022_u:vvr_14_1": "chāyāvṛtī kathaṃ vā anyo na piṇḍaścenna tasya te //",
  "SA20bsa022_u:vvr_15_0": "ekatve na krameṇetiryugapanna grahāgrahau /",
  "SA20bsa022_u:vvr_15_1": "vicchinnānekavṛttiśca sūkṣmānīkṣā ca no bhavet //",
  "SA20bsa022_u:vvr_16_0": "pratyakṣabuddhiḥ svapnādau yathā sa ca yadā tadā /",
  "SA20bsa022_u:vvr_16_1": "na so 'rtho dṛśyate tasya pratyakṣatvaṃ kathaṃ mataṃ //",
  "SA20bsa022_u:vvr_17_0": "uktaṃ yathā tadābhāsā vijñaptiḥ smaraṇaṃ tataḥ /",
  "SA20bsa022_u:vvr_17_1": "svapnadṛgviṣayābhāvaṃ nāprabuddho 'vagacchati //",
  "SA20bsa022_u:vvr_18_0": "anyonyādhipatitvena vijñaptiniyamo mithaḥ /",
  "SA20bsa022_u:vvr_18_1": "middhenopahataṃ cittaṃ svapne tenāsamaṃ phalaṃ //",
  "SA20bsa022_u:vvr_19_0": "maraṇaṃ paravijñaptiviśeṣādvikriyā yathā /",
  "SA20bsa022_u:vvr_19_1": "smṛtilopādikānyeṣāṃ piśācādimanovaśāt //",
  "SA20bsa022_u:vvr_20_0": "kathaṃ vā daṇḍakāraṇyaśūnyatvamṛṣikopataḥ /",
  "SA20bsa022_u:vvr_20_1": "manodaṇḍo mahāvadyaḥ kathaṃ vā tena sidhyati //",
  "SA20bsa022_u:vvr_21_0": "paracittavidāṃ jñānamayathārthaṃ kathaṃ yathā",
  "SA20bsa022_u:vvr_21_1": "svacittajñānam ajñānādyathā buddhasya gocaraḥ //",
  "SA20bsa022_u:vvr_22_0": "vijñaptimātratāsiddhiḥ svaśaktisadṛśī mayā /",
  "SA20bsa022_u:vvr_22_1": "kṛteyaṃ sarvathā sā tu na cintyā buddhagocaraḥ //",
  "SA20bsa022_u:1_0": "viṃśatikā vijñaptimātratāsiddhiḥ / kṛtiriyamācāryavasubandhoḥ /"
}