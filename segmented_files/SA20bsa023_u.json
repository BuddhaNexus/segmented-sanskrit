{
  "SA20bsa023_u:0": "// namaḥ sarvabuddhabodhisattvebhyaḥ //",
  "SA20bsa023_u:1": "Viṃśatikākārikā (Vk)",
  "SA20bsa023_u:2": "Vk_1 vijñaptimātramevaitadasadarthāvabhāsanāt /",
  "SA20bsa023_u:3": "yathā taimirikasyāsatkeśacandrādidarśanam //",
  "SA20bsa023_u:4": "Vk_2 yadi vijñaptiranarthā niyamo deśakālayoḥ /",
  "SA20bsa023_u:5": "santānasyāniyamaśca yuktā kṛtyakriyā na ca //",
  "SA20bsa023_u:6": "Vk_3 deśādiuniyamaḥ siddhaḥ svapnavat pretavat punaḥ /",
  "SA20bsa023_u:7": "santānāniyamaḥ sarvaiḥ pūyanadyādidarśane //",
  "SA20bsa023_u:8": "Vk_4 svapnopaghātavat kṛtyakriyā narakavat punaḥ /",
  "SA20bsa023_u:9": "sarvaṃ narakapālādidarśane taiśca bādhane //",
  "SA20bsa023_u:10": "Vk_5 tiraścāṃ sambhavaḥ svarge yathā na narake tathā /",
  "SA20bsa023_u:11": "na pretānāṃ yatastajjaṃ duḥkhaṃ nānubhavanti te //",
  "SA20bsa023_u:12": "Vk_6 yadi tatkarmabhistatra bhūtānāṃ sambhavastathā /",
  "SA20bsa023_u:13": "iṣyate pariṇāmaśca kiṃ vijñānasya neṣyate //",
  "SA20bsa023_u:14": "Vk_7 karmaṇo vāsanānyatra phalamanyatra kalpyate /",
  "SA20bsa023_u:15": "tatraiva neṣyate yatra vāsanā kiṃ nu kāraṇam //",
  "SA20bsa023_u:16": "Vk_8 rūpādyāyatanāstitvaṃ tadvineyajanaṃ prati /",
  "SA20bsa023_u:17": "abhiprāyavaśāduktamupapādukasattvavat //",
  "SA20bsa023_u:18": "Vk_9 yataḥ svabījād vijñaptiryadābhāsā pravartate /",
  "SA20bsa023_u:19": "dvividhāyatanatvena te tasyā munirabravīt //",
  "SA20bsa023_u:20": "Vk_10 tathā pudgalanairātmyapraveśo hi hyanyathā punaḥ /",
  "SA20bsa023_u:21": "deśanā dharmanairātmyapraveśaḥ kalpitātmanā //",
  "SA20bsa023_u:22": "Vk_11 na tadekaṃ na cānekaṃ viṣayaḥ paramāṇuśaḥ /",
  "SA20bsa023_u:23": "na ca te saṃhatā yasmāt paramāṇurna sidhyati //",
  "SA20bsa023_u:24": "Vk_12 ṣaṭkena yugapadyogāt paramāṇoḥ ṣaḍaṃśatā /",
  "SA20bsa023_u:25": "ṣaṇṇāṃ samānadeśatvāt piṇḍaḥ syādaṇumātrakaḥ //",
  "SA20bsa023_u:26": "Vk_13 paramāṇorasaṃyoge tatsaṅghāte 'sti kasya saḥ /",
  "SA20bsa023_u:27": "na cānavayavatvena tatsaṃyogo na sidhyati //",
  "SA20bsa023_u:28": "Vk_14 digbhāgabhedo yasyāsti tasyaikatvaṃ na yujyate /",
  "SA20bsa023_u:29": "chāyāvṛtī kathaṃ vānyo na piṇḍaścenna tasya te //",
  "SA20bsa023_u:30": "Vk_15 ekatve na krameṇetiryugapanna grahāgrahau /",
  "SA20bsa023_u:31": "vicchinnānekavṛttiśca sūkṣmānīkṣā ca no bhavet //",
  "SA20bsa023_u:32": "Vk_16 pratyakṣabuddhiḥ svapnādau yathā sā ca yadā tadā /",
  "SA20bsa023_u:33": "na so 'rtho dṛśyate tasya pratyakṣatvaṃ kathaṃ matam //",
  "SA20bsa023_u:34": "Vk_17 uktaṃ yathā tadābhāsā vijñaptiḥ smaraṇaṃ tataḥ /",
  "SA20bsa023_u:35": "svapne dṛgviṣayābhāvaṃ nāprabuddho 'vagacchati //",
  "SA20bsa023_u:36": "Vk_18 anyonyādhipatitvena vijñaptiniyamo mithaḥ /",
  "SA20bsa023_u:37": "middhenopahataṃ cittaṃ svapne tenāsamaṃ phalam //",
  "SA20bsa023_u:38": "Vk_19 maraṇaṃ paravijñaptiviśeṣād vikriyā yathā /",
  "SA20bsa023_u:39": "smṛtilopādikānyeṣāṃ piśācādimanovaśāt //",
  "SA20bsa023_u:40": "Vk_20 kathaṃ vā daṇḍakāraṇyaśūnyatvamṛṣikopataḥ /",
  "SA20bsa023_u:41": "manodaṇḍo mahāvadyaḥ kathaṃ vā tena sidhyati //",
  "SA20bsa023_u:42": "Vk_21 paracittavidāṃ jñānamayathārthaṃ kathaṃ yathā /",
  "SA20bsa023_u:43": "svacittajñānamajñānād yathā buddhasya gocaraḥ //",
  "SA20bsa023_u:44": "Vk_22 vijñaptimātratāsiddhiḥ svaśaktisadṛśī mayā /",
  "SA20bsa023_u:45": "kṛteyaṃ sarvathā sā tu na cintyā buddhagocaraḥ //",
  "SA20bsa023_u:46": "// viṃśatikākārikāḥ samāptāḥ //"
}