{
    "SA20bsa023_u:0_0": "// namaḥ sarvabuddhabodhisattvebhyaḥ //",
    "SA20bsa023_u:1_0": "Viṃśatikākārikā (Vk)",
    "SA20bsa023_u:vk_1_0": "vijñaptimātramevaitadasadarthāvabhāsanāt /",
    "SA20bsa023_u:vk_1_1": "yathā taimirikasyāsatkeśacandrādidarśanam //",
    "SA20bsa023_u:vk_2_0": "yadi vijñaptiranarthā niyamo deśakālayoḥ /",
    "SA20bsa023_u:vk_2_1": "santānasyāniyamaśca yuktā kṛtyakriyā na ca //",
    "SA20bsa023_u:vk_3_0": "deśādiuniyamaḥ siddhaḥ svapnavat pretavat punaḥ /",
    "SA20bsa023_u:vk_3_1": "santānāniyamaḥ sarvaiḥ pūyanadyādidarśane //",
    "SA20bsa023_u:vk_4_0": "svapnopaghātavat kṛtyakriyā narakavat punaḥ /",
    "SA20bsa023_u:vk_4_1": "sarvaṃ narakapālādidarśane taiśca bādhane //",
    "SA20bsa023_u:vk_5_0": "tiraścāṃ sambhavaḥ svarge yathā na narake tathā /",
    "SA20bsa023_u:vk_5_1": "na pretānāṃ yatastajjaṃ duḥkhaṃ nānubhavanti te //",
    "SA20bsa023_u:vk_6_0": "yadi tatkarmabhistatra bhūtānāṃ sambhavastathā /",
    "SA20bsa023_u:vk_6_1": "iṣyate pariṇāmaśca kiṃ vijñānasya neṣyate //",
    "SA20bsa023_u:vk_7_0": "karmaṇo vāsanānyatra phalamanyatra kalpyate /",
    "SA20bsa023_u:vk_7_1": "tatraiva neṣyate yatra vāsanā kiṃ nu kāraṇam //",
    "SA20bsa023_u:vk_8_0": "rūpādyāyatanāstitvaṃ tadvineyajanaṃ prati /",
    "SA20bsa023_u:vk_8_1": "abhiprāyavaśāduktamupapādukasattvavat //",
    "SA20bsa023_u:vk_9_0": "yataḥ svabījād vijñaptiryadābhāsā pravartate /",
    "SA20bsa023_u:vk_9_1": "dvividhāyatanatvena te tasyā munirabravīt //",
    "SA20bsa023_u:vk_10_0": "tathā pudgalanairātmyapraveśo hi hyanyathā punaḥ /",
    "SA20bsa023_u:vk_10_1": "deśanā dharmanairātmyapraveśaḥ kalpitātmanā //",
    "SA20bsa023_u:vk_11_0": "na tadekaṃ na cānekaṃ viṣayaḥ paramāṇuśaḥ /",
    "SA20bsa023_u:vk_11_1": "na ca te saṃhatā yasmāt paramāṇurna sidhyati //",
    "SA20bsa023_u:vk_12_0": "ṣaṭkena yugapadyogāt paramāṇoḥ ṣaḍaṃśatā /",
    "SA20bsa023_u:vk_12_1": "ṣaṇṇāṃ samānadeśatvāt piṇḍaḥ syādaṇumātrakaḥ //",
    "SA20bsa023_u:vk_13_0": "paramāṇorasaṃyoge tatsaṅghāte 'sti kasya saḥ /",
    "SA20bsa023_u:vk_13_1": "na cānavayavatvena tatsaṃyogo na sidhyati //",
    "SA20bsa023_u:vk_14_0": "digbhāgabhedo yasyāsti tasyaikatvaṃ na yujyate /",
    "SA20bsa023_u:vk_14_1": "chāyāvṛtī kathaṃ vānyo na piṇḍaścenna tasya te //",
    "SA20bsa023_u:vk_15_0": "ekatve na krameṇetiryugapanna grahāgrahau /",
    "SA20bsa023_u:vk_15_1": "vicchinnānekavṛttiśca sūkṣmānīkṣā ca no bhavet //",
    "SA20bsa023_u:vk_16_0": "pratyakṣabuddhiḥ svapnādau yathā sā ca yadā tadā /",
    "SA20bsa023_u:vk_16_1": "na so 'rtho dṛśyate tasya pratyakṣatvaṃ kathaṃ matam //",
    "SA20bsa023_u:vk_17_0": "uktaṃ yathā tadābhāsā vijñaptiḥ smaraṇaṃ tataḥ /",
    "SA20bsa023_u:vk_17_1": "svapne dṛgviṣayābhāvaṃ nāprabuddho 'vagacchati //",
    "SA20bsa023_u:vk_18_0": "anyonyādhipatitvena vijñaptiniyamo mithaḥ /",
    "SA20bsa023_u:vk_18_1": "middhenopahataṃ cittaṃ svapne tenāsamaṃ phalam //",
    "SA20bsa023_u:vk_19_0": "maraṇaṃ paravijñaptiviśeṣād vikriyā yathā /",
    "SA20bsa023_u:vk_19_1": "smṛtilopādikānyeṣāṃ piśācādimanovaśāt //",
    "SA20bsa023_u:vk_20_0": "kathaṃ vā daṇḍakāraṇyaśūnyatvamṛṣikopataḥ /",
    "SA20bsa023_u:vk_20_1": "manodaṇḍo mahāvadyaḥ kathaṃ vā tena sidhyati //",
    "SA20bsa023_u:vk_21_0": "paracittavidāṃ jñānamayathārthaṃ kathaṃ yathā /",
    "SA20bsa023_u:vk_21_1": "svacittajñānamajñānād yathā buddhasya gocaraḥ //",
    "SA20bsa023_u:vk_22_0": "vijñaptimātratāsiddhiḥ svaśaktisadṛśī mayā /",
    "SA20bsa023_u:vk_22_1": "kṛteyaṃ sarvathā sā tu na cintyā buddhagocaraḥ //",
    "SA20bsa023_u:2_0": "// viṃśatikākārikāḥ samāptāḥ //"
}