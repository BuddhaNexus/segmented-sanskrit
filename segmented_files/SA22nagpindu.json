{
  "SA22nagpindu:0": "piṇḍīkramaḥ",
  "SA22nagpindu:1": "ācāryanāgārjunapraṇītaḥ",
  "SA22nagpindu:2": "piṇḍīkramaḥ",
  "SA22nagpindu:3": "namaḥ sarvajñāya",
  "SA22nagpindu:4": "Pik_1 trailokyācāramuktaṃ gaganasamagataṃ sarvabhāvasvabhāvam,",
  "SA22nagpindu:5": "śuddhaṃ śāntaṃ viviktaṃ paramaśivamayaṃ yogināmeva gamyam /",
  "SA22nagpindu:6": "durbodhaṃ durvicāraṃ svaparahitatamaṃ vyāpinaṃ nirnimittam,",
  "SA22nagpindu:7": "vande kāyaṃ jinānāṃ sukhamasamasamaṃ nirvikalpaikamūrtim //",
  "SA22nagpindu:8": "Pik_2 śrīmatsamājatantrasya ṣaṭkoṭyarthāvabodhataḥ /",
  "SA22nagpindu:9": "piṇḍīkramamahaṃ vakṣye sarvasattvahitodayam //",
  "SA22nagpindu:10": "Pik_3 vikalpavāsanādoṣān jagattrayavimohakān /",
  "SA22nagpindu:11": "samabhivīkṣya tān dhīmān yogatantreṇa śodhayet //",
  "SA22nagpindu:12": "Pik_4 pañca kāmān parityajya tapobhirna ca pīḍayet / Pik_",
  "SA22nagpindu:13": "sukhena dhārayed vodhiṃ yogatantrānusārataḥ //",
  "SA22nagpindu:14": "Pik_5 teneha saṃvarastho 'yamabhedastu sadā vratī /",
  "SA22nagpindu:15": "kāyavākcittavajrasya sādhanaṃ tu samārabhet //",
  "SA22nagpindu:16": "Pik_6 mahāṭavīpradeśeṣu phalapuṣpādyalaṅkṛte /",
  "SA22nagpindu:17": "parvate vijate sādhyaṃ sarvasiddhisamuccayam //",
  "SA22nagpindu:18": "Pik_7 mṛdvāsanasamāsīnaḥ sattvaparyaṅkasaṃsthitaḥ /",
  "SA22nagpindu:19": "dveṣavajrasamādhisthaḥ sthānarakṣāṃ vicintayet //",
  "SA22nagpindu:20": "Pik_8 daśakrodhān samutsṛjya jvālābhāsurabhīṣaṇān /",
  "SA22nagpindu:21": "hūṃkārodbhūtabhānusthān pratyālīḍhapade sthitān //",
  "SA22nagpindu:22": "Pik_9 daśadigmaṇḍalāgre tu sañcintyaivaṃ yathākramam /",
  "SA22nagpindu:23": "sarvavidhnavināśārthaṃ sumbhamājñāya kīlayet //",
  "SA22nagpindu:24": "aṃ sumbha nisumbha hūṃ gṛhṇa gṛhṇa hūṃ gṛhṇāpaya gṛhṇāpaya hūṃ ānaya ho bhagavan vidyārāja hūṃ phaṭ /",
  "SA22nagpindu:25": "Pik_10 anena krodharūpeṇa ākṛṣyaivaṃ vināyakān /",
  "SA22nagpindu:26": "kīlayed vidhivat sarvān prayogeṇa tu buddhimān //",
  "SA22nagpindu:27": "Pik_11 vajrāmṛtamahārājaṃ vrajakīlaṃ vibhāvayet /",
  "SA22nagpindu:28": "nīlotpaladalaśyāmaṃ jvālāmālākulapratham //",
  "SA22nagpindu:29": "Pik_12 nābhideśādadhoobhāgaṃ śūlākāraṃ vibhāvayet /",
  "SA22nagpindu:30": "ūrdhvaṃ krodhākṛtiṃ caiva trimukhākāraṣaḍbhujam //",
  "SA22nagpindu:31": "Pik_13 adho vighnagaṇān vīkṣya tān mantraṃ samudāharan /",
  "SA22nagpindu:32": "nikhanet vajrakīlaṃ tu vighnadeheṣu niścalam //",
  "SA22nagpindu:33_0": "oṃ gha gha ghātaya ghātaya sarvaduṣṭān phaṭ phaṭ kīlaya kīlaya sarvapāpān phaṭ phaṭ",
  "SA22nagpindu:33_1": "hūṃ hūṃ hūṃ vajrakīla vajradhara ājñāpayati sarvavighnānāṃ kāyavākcittavajraṃ kīlaya hūṃ hūṃ hūṃ phaṭ /",
  "SA22nagpindu:34": "vajramudgarahastaṃ ca sumbharājaṃ vibhāvayet /",
  "SA22nagpindu:35": "Pik_14 vajramudgarahastaṃ ca sumbharājaṃ vibhāvayet /",
  "SA22nagpindu:36": "vajravahniṃ samantācca vispharantaṃ vicintya vai /",
  "SA22nagpindu:37": "duṣṭān pralapitāṃścinted dahyamānānitastataḥ //",
  "SA22nagpindu:38": "daśadik kīlayitvā tu adha ūrdhvamadhiṣya ca /",
  "SA22nagpindu:39": "bhāvayet paramārthena niḥsvabhāvabhavatrayam // Pik_15 /",
  "SA22nagpindu:40": "Pik_16 abhāve bhāvanābhāvo bhāvanā naiva bhāvanā /",
  "SA22nagpindu:41": "iti bhāvo na bhāvaḥ syād bhāvanā nopalabhyate //",
  "SA22nagpindu:42": "Pik_17 anayā gāthayā śūnyaṃ dhyātvā sthiracarātmakam /",
  "SA22nagpindu:43": "anena vidhiyogena jñānabhūmiradhiṣyate //",
  "SA22nagpindu:44": "Pik_18 ākāśadhātumadhyasthaṃ bhāvayed vāyumaṇḍalam /",
  "SA22nagpindu:45": "dvi-hūṃ yaṃ bījaniṣpannaṃ vajradvayasamāyutam //",
  "SA22nagpindu:46": "Pik_19 agnimaṇḍalakaṃ cāpi tasyopari vibhāvayet /",
  "SA22nagpindu:47": "dvi-hūṃ raṃ bījaniṣpannaṃ vajradvayasamāṅkitam //",
  "SA22nagpindu:48": "Pik_20 vārimaṇḍalakaṃ cāpi tasyopari vibhāvayet /",
  "SA22nagpindu:49": "dvi-hūṃ vaṃ bījaniṣpannaṃ vajradvayasamāyutam //",
  "SA22nagpindu:50": "Pik_29 pṛthvīmaṇḍalakaṃ cāpi tasmopari vibhāvayet /",
  "SA22nagpindu:51": "dvi-hūṃ laṃ bījaniṣpannaṃ vajradvayasamanvitam //",
  "SA22nagpindu:52": "Pik_22 caturmaṇḍalasaṃhāre vajrabhūbhāgamaṇḍalam /",
  "SA22nagpindu:53": "tatra bhrūṃkāraniṣpatraṃ kūṭāgāraṃ vibhāvayet //",
  "SA22nagpindu:54": "Pik_23 caturastraṃ caturdvāraṃ catustoraṇaśobhitam /",
  "SA22nagpindu:55": "catuḥsūtrasamāyuktamaṣṭambhopaśobhitam //",
  "SA22nagpindu:56": "Pik_24 hārārddhahāraracitaṃ maṇivajrārdhacandrakam /",
  "SA22nagpindu:57": "khacitaṃ vajraratnaistu dvāraniryūhasandhiṣu //",
  "SA22nagpindu:58": "Pik_25 kumbhastambhamahāvajraṃ kramaśīrṣastu pakṣiṇī /",
  "SA22nagpindu:59": "ghaṇṭāpatākasaṃśobhaṃ cāmarādivibhūṣitam //",
  "SA22nagpindu:60": "Pik_26 madhyamaṇḍalake dhyāyādātmānaṃ mudrayā yutam /",
  "SA22nagpindu:61": "trimukhaṃ ṣaḍbhujākāramindranīlasamapratham //",
  "SA22nagpindu:62": "Pik_27 śrīvairocana-ratnau ca amitābhaśca karmarāṭ /",
  "SA22nagpindu:63": "pūrvādidikṣu sañcintyāstrimukhākāraṣaḍbhujāḥ //",
  "SA22nagpindu:64": "Pik_28 moharatyādikā devyastrimukhākāraṣaḍbhujāḥ /",
  "SA22nagpindu:65": "āgneyīṃ diśāmārabhya sanniveśyā yathākramam //",
  "SA22nagpindu:66": "Pik_29 rūpavajrādikāstadvad bāhyakoṇacatuṣṭaye /",
  "SA22nagpindu:67": "sthitaiva sparśavajrā tu vajrasattvasamāyutā //",
  "SA22nagpindu:68": "Pik_30 paṭṭikāyāṃ nyaset pūrve maitreyaṃ kṣitigarbhakam /",
  "SA22nagpindu:69": "vajrapāṇiṃ khagarbhaṃ ca nyased dakṣiṇato vratī //",
  "SA22nagpindu:70": "Pik_31 lokeśaṃ mañcughoṣaṃ ca paścimāyāṃ nyaset punaḥ /",
  "SA22nagpindu:71": "sarvāvaraṇaviṣkambhiṃ samantabhadrañcottare //",
  "SA22nagpindu:72": "Pik_32 yamāntakaśca prāgdvāre dakṣiṇe tvaparājitaḥ /",
  "SA22nagpindu:73": "paścime tu hayagrīva uttare 'mṛtakuṇḍaliḥ //",
  "SA22nagpindu:74": "Pik_33 acalaṣṭakkirājaśca nīladaṇḍo mahābalaḥ /",
  "SA22nagpindu:75": "pūrvādikoṇamārabhya pravicintyā yathāyatham //",
  "SA22nagpindu:76": "Pik_34 sumbharājamahākrodhamadhastāt pravicintayet /",
  "SA22nagpindu:77": "uṣṇīṣacakravartī ca pravicintyastathopari //",
  "SA22nagpindu:78": "Pik_35 dhyātvaivamadhimuktayā vai māṇḍaleyān yathāvidhi /",
  "SA22nagpindu:79": "punaḥ sampuṭayogena svakāye tān praveśayet //",
  "SA22nagpindu:80": "Pik_36 kāyacakragatān buddhān sañcintyaivaṃ yathāyatham /",
  "SA22nagpindu:81": "pāramārthikacakreṇa tathatāyāṃ praveśayet //",
  "SA22nagpindu:82": "Pik_37 mārayet tvāgataṃ vyūhaṃ sutarāṃ siddhimāpnuyāt /",
  "SA22nagpindu:83": "asyārtho vajramālāyāṃ vistṛto visphuṭaṃ yathā //",
  "SA22nagpindu:84": "Pik_38 rūpaskandhagatādarśo bhūdhāturnayanendriyam /",
  "SA22nagpindu:85": "rūpaṃ ca pañcamaṃ yāti krodhamaitreyasaṃyutam //",
  "SA22nagpindu:86": "Pik_39 vedanā skandhasamatā abdhātuḥ śravaṇendriyam /",
  "SA22nagpindu:87": "śabdaśca pañcamaṃ yāti krodhadvayasamanvitam //",
  "SA22nagpindu:88": "Pik_40 saṃjñā ca pratyavaikṣaṇyaṃ hutabhug nāsikendriyam /",
  "SA22nagpindu:89": "gandhaśca pañcaṃ yāti krodhadvayasamanvitam //",
  "SA22nagpindu:90": "Pik_41 saṃskāraḥ kṛtyānuṣṭānaṃ māruto rasanendriyam /",
  "SA22nagpindu:91": "rasaśca pañcamaṃ yāti krodhadvayasamanvitam //",
  "SA22nagpindu:92": "Pik_42 urdhvādhaḥ krodhasaṃyuktaṃ prakṛtyābhāsameva ca /",
  "SA22nagpindu:93": "vijñānaskandhamāyāti vijñānaṃ ca prabhāsvaram //",
  "SA22nagpindu:94": "Pik_43 nirvāṇaṃ sarvaśūnyaṃ ca dharmakāyaśca gadyate /",
  "SA22nagpindu:95": "dṛḍhīkaraṇahetutvān mantrametadudāharet //",
  "SA22nagpindu:96": "oṃ śūnyatājñānavajrasvabhāvātmako 'ham /",
  "SA22nagpindu:97": "Pik_44 paramārthamaṇḍalaṃ hyetannirābhāsamalakṣaṇam /",
  "SA22nagpindu:98": "paramārthasatyanāmāpi sarvatāthāgatālayaḥ //",
  "SA22nagpindu:99": "Pik_45 prabhāsvarapraviṣṭasya vyutthānaṃ ca pradarśate /",
  "SA22nagpindu:100": "mantramūrtiprayogeṇa devatālambanaṃ prati //",
  "SA22nagpindu:101": "Pik_46 ākāśadhātumadhyasthaṃ bhāvayet sūryamaṇḍalam /",
  "SA22nagpindu:102": "tasyopari punarmantrī candrabimbaṃ vibhāvayet //",
  "SA22nagpindu:103": "Pik_47 tatra cāṣṭadalaṃ padmaṃ raktavarṇaṃ vibhāvayet /",
  "SA22nagpindu:104": "padmopari mahāmantraṃ tryakṣaraṃ bhāvayet punaḥ //",
  "SA22nagpindu:105": "Pik_48 mantraṃ padmaṃ tathā sūryaṃ praviṣṭaṃ candramaṇḍale /",
  "SA22nagpindu:106": "candramaṇḍalamāpūrṇaṃ bodhicittaṃ vibhāvayet //",
  "SA22nagpindu:107": "Pik_49 sthāvaraṃ jaṅgamaṃ sarvaṃ tatraiva pravicintayet /",
  "SA22nagpindu:108": "dṛḍhīkaraṇahetutvānmantrametadudāharet //",
  "SA22nagpindu:109": "oṃ dharmadhātusvabhāvātmako 'ham /",
  "SA22nagpindu:110": "Pik_50 yogamevaṃ samālambya anuyogaṃ samācaret /",
  "SA22nagpindu:111": "punaśca tryakṣaraṃ yogī candramadhye vicintayet //",
  "SA22nagpindu:112": "Pik_51 tatastryakṣarasambhūtaṃ sitakundendusannibham /",
  "SA22nagpindu:113": "ādināthaṃ vicintyātha atiyogaṃ samārabhet //",
  "SA22nagpindu:114": "Pik_52 akṣobhyānupraveśena trimukhaṃ ṣaḍbhujojjvalam /",
  "SA22nagpindu:115": "indranīlaprabhaṃ dīptaṃ vajrasattvaṃ vibhāvayet //",
  "SA22nagpindu:116": "Pik_53 vajraṃ cakraṃ tathā padmaṃ savyahasteṣu bhāvayet /",
  "SA22nagpindu:117": "ghaṇṭāṃ ratnaṃ tathā khaṅgaṃ vāmahasteṣu bhāvayet //",
  "SA22nagpindu:118": "Pik_54 tato nyāsaṃ prakurvīta skandhādīnāṃ vibhāgavit /",
  "SA22nagpindu:119": "vairocanādisumbhāntaṃ bījanyāsena tattvataḥ //",
  "SA22nagpindu:120": "Pik_55 vairocanīyabījaṃ tu oṃkāraṃ śuklavarṇakam /",
  "SA22nagpindu:121": "rūpaskandhasvabhāvena nyasen mūrdhani mantravit //",
  "SA22nagpindu:122": "Pik_56 āḥkāramamittābhasya saṃjñāskandhasvabhāvakam /",
  "SA22nagpindu:123": "raktavarṇaṃ mukhe dhyātvā vāgaiśvaryamavāpnuyāt //",
  "SA22nagpindu:124": "Pik_57 akṣobhyasya tu hūkāraṃ rājāvartakasuprabham /",
  "SA22nagpindu:125": "vinyaseddhṛdaye mantrī vijñānaskandharūpataḥ //",
  "SA22nagpindu:126": "Pik_58 svākāraṃ ratnanāthasya vedanāskandharūpataḥ /",
  "SA22nagpindu:127": "pītavarṇaṃ nyasennābhau vedanāśuddhihetukam //",
  "SA22nagpindu:128": "Pik_59 pādadvaye tu hāḥkāraṃ saṃskāaskandhabhāvataḥ /",
  "SA22nagpindu:129": "haritābhaṃ nyasenmantrī karmanāthasya tattvataḥ //",
  "SA22nagpindu:130": "Pik_60 moharatyādikairmantrī pṛthivyādīn praveśayet /",
  "SA22nagpindu:131": "kharatvaṃ dravatā auṣṇyamīraṇatvaṃ ca te kramāt //",
  "SA22nagpindu:132": "Pik_61 thlīṃkāraṃ cakṣuṣi nyasya kṣitigarbhaṃ vibhāvayet /",
  "SA22nagpindu:133": "oṃkāraṃ karṇayornyasya vajrapāṇiṃ vibhāvayet //",
  "SA22nagpindu:134": "Pik_62 oṃkāraṃ vinyased ghrāṇe khagarbhaṃ tu vibhāvayet /",
  "SA22nagpindu:135": "oṃkāraṃ rasane dhyātvā lokeśaṃ ca vikalpayet //",
  "SA22nagpindu:136": "Pik_63 hūṃkāraṃ manasi dhyātvā mañjughoṣaṃ prabhāvayet /",
  "SA22nagpindu:137": "oṃkāraṃ sarvakāye ca dhyātvā viṣkambhiṇaṃ smaret //",
  "SA22nagpindu:138": "Pik_64 maiṃ-kāreṇa śiraḥsaṃsthaṃ maitreyaṃ parikalpayet /",
  "SA22nagpindu:139": "bhadraṃ samantato dhyātvā sarvasandhiṣu sannyaset //",
  "SA22nagpindu:140": "Pik_65 yamāntakaḥ savyabhuje apasavye 'parājitaḥ /",
  "SA22nagpindu:141": "hayagrīvo mukhe bhāvyo vajre cāmṛtakuṇḍaliḥ //",
  "SA22nagpindu:142": "Pik_66 acalaṃ dakṣiṇe bhāge vāme ca ṭakkirājakam /",
  "SA22nagpindu:143": "jānau ca dakṣiṇe cintennīladaṇḍaṃ mahojjavalam //",
  "SA22nagpindu:144": "Pik_67 vāmajānau mahābalaṃ mūrdhni coṣṇīṣajriṇam /",
  "SA22nagpindu:145": "pādāntadvayavinyastaṃ sumbharājaṃ vicintayet //",
  "SA22nagpindu:146": "Pik_68 nyāsaṃ kṛtvā tato mantrī skandhādīnāṃ yathāvidhi /",
  "SA22nagpindu:147": "kāyamaṇḍalamāpanno mahāyogaṃ samārabhet //",
  "SA22nagpindu:148": "Pik_69 mūrdhni madhyagataṃ cintet sampūrṇaṃ candramaṇḍalam /",
  "SA22nagpindu:149": "tatra oṃkāraṃ śuklābhaṃ prasphurat-pañcaraśmikam //",
  "SA22nagpindu:150": "Pik_70 tato devīṃ viniścārya ādhipatyaprayogataḥ /",
  "SA22nagpindu:151": "locanāṃ vividhāṃ cintet sarvavyomni prapūritām //",
  "SA22nagpindu:152": "Pik_71 kāyavajraṃ vicintyātha vyomāpūrya vyavasthitam /",
  "SA22nagpindu:153": "tanmadhye 'dhipatiṃ cintedātmanaśca puraḥsthitam //",
  "SA22nagpindu:154": "Pik_72 dvātriṃśallakṣaṇadharaṃ vyañcanāśītibhūṣitam /",
  "SA22nagpindu:155": "prārthayet tu tato mantrī gāthādvayamudāharan //",
  "SA22nagpindu:156": "Pik_73 buddhakāyadharaḥ śrīmāṃstrivajrābhedyabhāvitaḥ /",
  "SA22nagpindu:157": "adhiṣṭhānapadaṃ me 'dya karotu kāyavajriṇaḥ //",
  "SA22nagpindu:158": "Pik_74 daśadiksaṃsthitā buddhāstrivajrābhedyabhāvitāḥ /",
  "SA22nagpindu:159": "adhiṣṭhānapadaṃ me 'dya kurvantu kāyavajriṇaḥ //",
  "SA22nagpindu:160": "Pik_75 locanāsahasaṃyuktaṃ śāścataṃ ca vibhāvayet /",
  "SA22nagpindu:161": "tatpraveśyādhitiṣṭheta pañcuskandhaprapūritam //",
  "SA22nagpindu:162": "Pik_76 yatkāyaṃ sarvabuddhānāṃ pañcaskandhaprapūritam /",
  "SA22nagpindu:163": "buddhākāyasvabhāvena mamāpi tādṛśaṃ bhavet //",
  "SA22nagpindu:164": "oṃ sarvatathāgatakāyavajrasvabhāvātmako 'ham /",
  "SA22nagpindu:165": "Pik_77 jihvābjamadhyagataṃ cinted āḥkāraṃ raktavarṇakam /",
  "SA22nagpindu:166": "pāṇḍarākhyāṃ ca sagaṇāṃ saṃspharet vyomapūritām //",
  "SA22nagpindu:167": "Pik_78 vāgvajraṃ ca tathā mantrī vyomāpūrya vyavasthitam /",
  "SA22nagpindu:168": "prārthayet tu tato mantrī gāthādvayamudāharan //",
  "SA22nagpindu:169": "Pik_79 dharmo vai vākpathaḥ śrīmāṃstrivajrābhedyabhāvitaḥ /",
  "SA22nagpindu:170": "adhiṣṭhānapadaṃ me 'dya karotu vāgvajriṇaḥ //",
  "SA22nagpindu:171": "Pik_80 daśadiksaṃsthitā buddhāstrivajrābhedyabhāvitāḥ /",
  "SA22nagpindu:172": "adhiṣṭhānapadaṃ me 'dya kurvantu vāgvajriṇaḥ //",
  "SA22nagpindu:173": "Pik_81 svanāyakena saṃyuktāṃ pāṇḍarāṃ sahasaiva tu /",
  "SA22nagpindu:174": "jihvāpraviṣṭāṃ sañcintya vāgadhiṣṭhānamārabhet //",
  "SA22nagpindu:175": "Pik_82 yadeva vajradharmasya vācā niruktisampadā /",
  "SA22nagpindu:176": "mamāpi tādṛśī vācā bhaved dharmadharopamā //",
  "SA22nagpindu:177": "oṃ sarvatathāgatavāgvajrasvabhāvātmako 'ham /",
  "SA22nagpindu:178": "Pik_83 vinyasya hṛdaye mantrī śaśibimbaṃ samujjvalam /",
  "SA22nagpindu:179": "rājāvartanibhaṃ tatra hūṃkāraṃ pañcaraśmikam //",
  "SA22nagpindu:180": "Pik_84 tato niścārayed devīṃ māmakīṃ sagaṇāṃ tataḥ /",
  "SA22nagpindu:181": "cittavajraṃ tathā dhyātvā prārthayeta yathā puraḥ //",
  "SA22nagpindu:182": "Pik_85 cittavajradharaḥ śrīmāṃstrivajrābhedyabhāvitaḥ /",
  "SA22nagpindu:183": "adhiṣṭhānapadaṃ me 'dya karotu cittavajriṇaḥ //",
  "SA22nagpindu:184": "Pik_86 daśadiksaṃsthitā buddhāstrivajrābhedyabhāvitāḥ /",
  "SA22nagpindu:185": "adhiṣṭhānapadaṃ me 'dya kurvantu cittavajriṇaḥ //",
  "SA22nagpindu:186": "Pik_87 cittavajrasamāyuktaṃ hṛdaye sampraveśya ca /",
  "SA22nagpindu:187": "māmakīvyūhamakhilaṃ cittādhiṣṭhānamārabhet //",
  "SA22nagpindu:188": "Pik_88 yaccittaṃ samantabhadrasya guhyakendrasya dhīmataḥ /",
  "SA22nagpindu:189": "mamāpi tādṛśaṃ cittaṃ bhaved vajradharopamam // Pik_",
  "SA22nagpindu:190": "oṃ sarvatathāgatacittavajrasvabhāvātmako 'ham /",
  "SA22nagpindu:191": "Pik_89 evaṃ pṛthagadhiṣṭhāya kulatrayavibhāgataḥ /",
  "SA22nagpindu:192": "punaḥ sarvātmakaṃ kuryānmantreṇānena buddhimān //",
  "SA22nagpindu:193": "oṃ sarvatathāgatakāyavākcittavajrasvabhāvātmako 'ham /",
  "SA22nagpindu:194": "Pik_90 adhiṣṭhāyaivamātmānaṃ śaśimaṇḍalamadhyagam /",
  "SA22nagpindu:195": "ṣaḍbhiścihnaiḥ samāyuktaṃ cintet samayasattvakam //",
  "SA22nagpindu:196": "Pik_91 hṛnmadhyasaṃsthitaṃ sūkṣmaṃ jñānasattvaṃ vibhāvayet /",
  "SA22nagpindu:197": "samādhisattvasaṃjñaṃ ca hūṃkāraṃ taddṛḍhī nyaset //",
  "SA22nagpindu:198": "Pik_92 niṣpādyaivaṃ mahāyogaṃ trisattvātmakamātmavān /",
  "SA22nagpindu:199": "anena vidhiyogena mahāsādhānamārabhet //",
  "SA22nagpindu:200": "Pik_93 prāpya kanyāṃ viśālākṣīṃ rūpayauvanamaṇḍitām /",
  "SA22nagpindu:201": "nīlotpaladalaśyāmāṃ rajakasya mahātmanaḥ //",
  "SA22nagpindu:202": "Pik_94 suśikṣitāṃ samādāya sādhake bhaktivatsalām /",
  "SA22nagpindu:203": "oṃkāraṃ śirasi dhyātvā āḥkāraṃ vākyathe nyaset //",
  "SA22nagpindu:204": "Pik_15 hūṃkāraṃ hṛdaye dhyātvā svā nābhau hā dvipādayoḥ /",
  "SA22nagpindu:205": "locanāṃ māmakīṃ cāpi tathā pāṇḍaravāsinīm //",
  "SA22nagpindu:206": "tārāṃ cāpi tathā mantrī pṛthivyādiṣu sannyaset /",
  "SA22nagpindu:207": "rūpavajrādikā devīstasyāmeva vibhāvayet // Pik_ 96 //",
  "SA22nagpindu:208": "Pik_97 kṣitigarbhādibhistāsāṃ samāpattiṃ vibhāvayet /",
  "SA22nagpindu:209": "dakṣiṇe vajravetālīṃ bhuje vāme 'parājitām //",
  "SA22nagpindu:210": "Pik_98 bhṛkuṭiṃ ca mukhe tasyā ekajaṭāṃ ca guhyake /",
  "SA22nagpindu:211": "bhūyo dakṣiṇapārśvasthāṃ viśvavajrīṃ tathāgatīm //",
  "SA22nagpindu:212": "Pik_99 viśvaratnāṃ ca vāme tu mudrāyāḥ pravibhāvayet /",
  "SA22nagpindu:213": "purnadakṣiṇajānusthāṃ viśvapadmāṃ tathāgatīm //",
  "SA22nagpindu:214": "Pik_100 viśvakarmāṃ ca vāme tu mūrdhni gaganavajriṇīm / Pik_",
  "SA22nagpindu:215": "pādāntadvayavinyastāṃ dharaṇīndharadevatīm //",
  "SA22nagpindu:216": "Pik_101 evaṃ saṃskṛtya tāṃ yogī vajrapadmathārabhet /",
  "SA22nagpindu:217": "mantrī hūṃkārajaṃ vajraṃ dhyāyād vai pañcasūcikam //",
  "SA22nagpindu:218": "madhyasūcau tathā tasya praṇavaṃ va vibhāvayet /",
  "SA22nagpindu:219": "Pik_102 madhyasūcau tathā tasya praṇavaṃ va vibhāvayet /",
  "SA22nagpindu:220": "tathaivāṣṭadalaṃ padmam āḥkāreṇa tu bhāvayet /",
  "SA22nagpindu:221": "pañcaraśmisamākīrṇaṃ tataḥ sādhanamārabhet //",
  "SA22nagpindu:222": "oṃ sarvatathāgatānurāgaṇavajrasvabhāvātmako 'ham /",
  "SA22nagpindu:223": "Pik_103 hūṃkāragītena tu cālayeta samudvahan vajradharasya garvam /",
  "SA22nagpindu:224": "svabodhicittodayakāla eva phaṭkāramantraṃ samudīrayet saḥ //",
  "SA22nagpindu:225": "Pik_104 visargānte punarmantrī bodhicittena pūjayet /",
  "SA22nagpindu:226": "daśadiksaṃsthitān buddhān mantrametadudīrayet //",
  "SA22nagpindu:227": "oṃ sarvatathāgatapūjājrasvabhāvātmako 'ham /",
  "SA22nagpindu:228": "Pik_105 svamantrākṣaraniṣpannaṃ trivajrādhiṣṭhitasvakam /",
  "SA22nagpindu:229": "padmamadhye tu niṣpādya dveṣavajro bhavet punaḥ //",
  "SA22nagpindu:230": "Pik_106 vajradhṛg-mantraniṣpannaṃ paśyedakṣobhyavajriṇam /",
  "SA22nagpindu:231": "jaṭāmukuṭadharaṃ nātham akṣobhyakṛtaśekharam //",
  "SA22nagpindu:232": "Pik_107 nṛpāvartakasaṅkāśaṃ kṛṣṇaraktasitānanam / Pik_",
  "SA22nagpindu:233": "sarvālaṅkārasampūrṇaṃ ṣaḍbhujaṃ tu vibhāvayet //",
  "SA22nagpindu:234": "Pik_108 vajraṃ cakraṃ tathā padmaṃ savyahasteṣu dhārayet /",
  "SA22nagpindu:235": "ghaṇṭāṃ cintāmaṇiṃ khaḍgaṃ tasya vāmeṣu bhāvayet //",
  "SA22nagpindu:236": "Pik_109 niṣkramya hṛdayādeṣa vyavalokya diśo daśa /",
  "SA22nagpindu:237": "buddharddhimakhilāṃ kṛtvā dharmacakraṃ pravartya ca //",
  "SA22nagpindu:238": "Pik_110 saṃśodhya nikhilān sattvān dveṣavajrapade sthitān /",
  "SA22nagpindu:239": "āgatya vajranāthasya purato 'bhiniṣīdati //",
  "SA22nagpindu:240": "Pik_111 anupraveśya tanmantrī hṛdyātmānaṃ vibhāvayet /",
  "SA22nagpindu:241": "pūrvarūpaṃ parāvṛttya dveṣavajrapade sthitaḥ //",
  "SA22nagpindu:242": "Pik_112 indranīlaprabhaṃ dīptaṃ sūryamaṇḍalamadhyagam /",
  "SA22nagpindu:243": "svamudrāliṅgitaṃ vīraṃ sarvālaṅkārabhūṣitam //",
  "SA22nagpindu:244": "Pik_113 raudraśāntamahārāgaṃ mukhatrayavirājitam /",
  "SA22nagpindu:245": "dveṣavajrasamādhisthaḥ protsṛjet sarvamaṇḍalam //",
  "SA22nagpindu:246": "Pik_114 jinajig-mantraniṣpannaṃ sṛjed vairocanaṃ vibhum /",
  "SA22nagpindu:247": "śaraccandrāṃśusaṅkāśaṃ jaṭāmukuṭamaṇḍitam //",
  "SA22nagpindu:248": "Pik_115 sitaraktakṛṣṇavadanaṃ ṣaḍbhujaṃ śāntarūpiṇam /",
  "SA22nagpindu:249": "cakravajrasitāmbhojaṃ dakṣiṇeṣu vicintayet //",
  "SA22nagpindu:250": "Pik_116 ghaṇṭāṃ cintāmaṇiṃ khaḍgaṃ vāmeṣvasya vibhāvayet /",
  "SA22nagpindu:251": "hṛdayāt tathaiva nirgatya mohacaryāsthitāḥ prajāḥ //",
  "SA22nagpindu:252": "Pik_117 saṃśodhya punarāgatya punaścake niṣīdati /",
  "SA22nagpindu:253": "ratnadhṛg-mantraniṣpannaṃ ratnaketuṃ sṛjed budhaḥ //",
  "SA22nagpindu:254": "Pik_118 jaṭājūṭadharaṃ saumyamakṣobhyakṛtaśekharam /",
  "SA22nagpindu:255": "pītakṛṣṇasitāsyaṃ ca ṣaḍbhujaṃ cāpi cintayet //",
  "SA22nagpindu:256": "Pik_119 tasya cintāmaṇiṃ vajraṃ cakraṃ savyeṣu bhāvayet /",
  "SA22nagpindu:257": "ghaṇṭāṃ ca pītakamalaṃ khaḍgaṃ vāmeṣu bhāvayet //",
  "SA22nagpindu:258": "Pik_120 hṛdayāt tathaiva nirgatya ahaṅkārapade sthitān /",
  "SA22nagpindu:259": "saṃśodhya dakṣiṇe bhāge ratnamadhye niṣīdati //",
  "SA22nagpindu:260": "Pik_121 ārolig-mantraniṣpannaṃ sṛjedamitavajriṇam /",
  "SA22nagpindu:261": "padmarāgaprabhaṃ saumyamakṣobhyakṛtaśekharam //",
  "SA22nagpindu:262": "Pik_122 jaṭāmukuṭadharaṃ nāthaṃ raktakṛṣṇasitānanam /",
  "SA22nagpindu:263": "śṛṅgārarasasaṃyuktaṃ ṣaḍbhujaṃ tu vibhāvayet //",
  "SA22nagpindu:264": "Pik_123 padmanālaṃ gṛhītvā tu vāmena saha ghaṇṭayā /",
  "SA22nagpindu:265": "hṛtpradeśasthitaṃ padmaṃ dakṣiṇena vikāśayet //",
  "SA22nagpindu:266": "Pik_124 savyayorvajracakre tu vāmayoḥ ratnakhaḍgakau / Pik_",
  "SA22nagpindu:267": "pūrvavad rāgiṇaḥ śodhya pṛṣṭhato 'bje niṣīdatī //",
  "SA22nagpindu:268": "Pik_125 amoghavajriṇaṃ mantrī prajñādhṛg-mantranirmitam /",
  "SA22nagpindu:269": "haritābhaṃ sṛjennāthaṃ jaṭāmukuṭamaṇḍitam //",
  "SA22nagpindu:270": "Pik_126 haritakṛṣṇasitāsyaṃ ca ṣaḍbhujaṃ raśmibhāsuram /",
  "SA22nagpindu:271": "khaḍgaṃ ca viśvavajraṃ ca cakraṃ savyeṣu bhāvayet //",
  "SA22nagpindu:272": "Pik_127 ghaṇṭāmapasavyahasteṣu haritapadmaṃ maṇiṃ tathā /",
  "SA22nagpindu:273": "abhūtavacasaḥ sattvān viśodhya punarāgataḥ //",
  "SA22nagpindu:274": "Pik_128 uttarasyāṃ diśi tathā viśvavajre niṣīdati /",
  "SA22nagpindu:275": "dveṣo mohastathā rāgaścintāmaṇiḥ samayastathā //",
  "SA22nagpindu:276": "Pik_129 kulā hyete tu vai pañca kāmamokṣaprasādhakāḥ /",
  "SA22nagpindu:277": "mantrānmoharaterjātāṃ sṛjed devīṃ tu locanām //",
  "SA22nagpindu:278": "Pik_130 śvetāṃ śāntarasopetāṃ mūrdhni vairocanāṅkitām /",
  "SA22nagpindu:279": "sitaraktakṛṣṇavadanāṃ ṣaḍbhujāṃ tu vibhāvayet //",
  "SA22nagpindu:280": "Pik_139 savye cakraṃ va vajraṃ ca tathaiva sitamutpalam /",
  "SA22nagpindu:281": "vāme ghaṇṭāṃ tathā ratnaṃ khaḍgaṃ cāpi vibhāvayet //",
  "SA22nagpindu:282": "Pik_132 hṛdayāt tu vinirgatya vyavalokya diśo daśa /",
  "SA22nagpindu:283": "grahavyādhyāture loke śāntiṃ kṛtvā mahākṛpā //",
  "SA22nagpindu:284": "Pik_133 āgatya cakramadhye tu pūrvakoṇe niṣīdati /",
  "SA22nagpindu:285": "mantrād dveṣaraterjātā sṛjed devīṃ tu māmakīm /",
  "SA22nagpindu:286": "Pik_134 mantrād dveṣaraterjātā sṛjed devīṃ tu māmakīm /",
  "SA22nagpindu:287": "nīlotpaladalaśyāmāṃ cāruvaktrāṃ manoramām / Pik_",
  "SA22nagpindu:288": "kṛṣṇaraktasitāsyāṃ ca akṣobhyakṛtaśekharām //",
  "SA22nagpindu:289": "Pik_135 savyeṣu vajraṃ cakraṃ ca nīlaraktotpalaṃ tathā /",
  "SA22nagpindu:290": "ghaṇṭāṃ ratnaṃ ca khaḍgaṃ ca vāhasteṣu dhārayet //",
  "SA22nagpindu:291": "Pik_136 mahāvighnabhayārtānāṃ rakṣāṃ kṛtvā mahākṛpā /",
  "SA22nagpindu:292": "niṣkramya punarāgatya nairṛtyāṃ sā niṣīdati //",
  "SA22nagpindu:293": "Pik_137 mantrād rāgaraterjātā sṛjet pāṇḍaravāsinīm /",
  "SA22nagpindu:294": "raktakṛsṇasitāsyāṃ vai padmarāgamaṇiprabhām //",
  "SA22nagpindu:295": "Pik_138 sāmitābhajaṭājūṭāṃ ṣaḍbhujāṃ tu vibhāvayet /",
  "SA22nagpindu:296": "gṛhītvolpalanālaṃ tu vāmena saha ghaṇṭayā //",
  "SA22nagpindu:297": "Pik_139 utpalaṃ hṛtpradeśasthaṃ rakta savyena bodhayet /",
  "SA22nagpindu:298": "vajraṃ cakraṃ ca savyābhyāṃ maṇiṃ khaḍgaṃ ca vāmataḥ //",
  "SA22nagpindu:299": "Pik_140 dhārayantī vinirgatya śāntiṃ kṛtvā mahāture /",
  "SA22nagpindu:300": "āgatya padmamadhye vai vāyukoṇe niṣīdati //",
  "SA22nagpindu:301": "Pik_141 mantrād vajraraterjātāṃ sṛjet tārāṃ manoramām /",
  "SA22nagpindu:302": "haritakṛṣṇasitāsyāṃ ca dūrvāpatrasamaprabhām //",
  "SA22nagpindu:303": "Pik_142 amoghena kṛtosṇīṣāṃ ṣaḍbhujāṃ tu vibhāvayet /",
  "SA22nagpindu:304": "viśvavajraṃ ca cakraṃ ca savyato 'sitamutpalam //",
  "SA22nagpindu:305": "Pik_143 vāmeṣu vinyased ghaṇṭāṃ ratnaṃ khaḍgaṃ tathā vratī /",
  "SA22nagpindu:306": "sarvasattvān vaśīkṛtya viśvavajrāsanā punaḥ //",
  "SA22nagpindu:307": "Pik_144 nirgatāsau samāgamya śivasthāne niṣīdati /",
  "SA22nagpindu:308": "dvitīye tu puṭe yogī rūpavajrādikaṃ sṛjet //",
  "SA22nagpindu:309": "Pik_145 agnikoṇe sṛjed devīṃ rūpavajrāṃ manoramām /",
  "SA22nagpindu:310": "trimukhāṃ ṣaḍbhujāṃ śvetāṃ śrīvairocanamaulikām //",
  "SA22nagpindu:311": "Pik_146 gṛhītadarpaṇāṃ dvābhyāṃ śeṣaṃ moharateriva /",
  "SA22nagpindu:312": "nairṛtyāṃ vinyased devīṃ śabdavajrāṃ tu ṣaḍbhujām //",
  "SA22nagpindu:313": "Pik_147 pītavarṇāṃ trivaktrāṃ ca ratnasambhavamaulikām /",
  "SA22nagpindu:314": "vīṇāvyagradvihastāṃ ca śeṣaṃ māmakīvad bhavet //",
  "SA22nagpindu:315": "Pik_148 vāyusthāne nyased devīṃ gandhavajrāṃ tu ṣaḍbhujām /",
  "SA22nagpindu:316": "raktavarṇāṃ trivaktrāṃ ca amitābhajaṭādharām //",
  "SA22nagpindu:317": "Pik_149 śaṅkhavyagradvihastāṃ ca śeṣaiḥ pāṇḍaravāsinīm /",
  "SA22nagpindu:318": "aiśānyāṃ vinyased devīṃ rasavajrāṃ tu ṣaḍbhujām //",
  "SA22nagpindu:319": "Pik_150 trimukhāṃ śyāmavarṇā ca dandubhisvaramaulikām /",
  "SA22nagpindu:320": "hastastharasabhāṇḍāṃ ca śeṣaistārāsamākṛtim //",
  "SA22nagpindu:321": "Pik_151 vajrasattvaṃ samāliṅgya cakramadhye vyavasthitām /",
  "SA22nagpindu:322": "cintayet sparśavajrāṃ tu patitulyāṃ mukhādibhiḥ //",
  "SA22nagpindu:323": "Pik_152 tṛtīye tu puṭe pūrve paṭṭikāyāṃ sṛjed vratī /",
  "SA22nagpindu:324": "maiṃ-thlīṃ bījaviniṣpanau maitreyakṣitigarbhakau //",
  "SA22nagpindu:325": "Pik_153 praṇavena samutpannau vajrapāṇikhagarbhakau /",
  "SA22nagpindu:326": "paṭṭikāyāṃ sṛjenmantrīṃ dakṣiṇāyāṃ yathākramam //",
  "SA22nagpindu:327": "Pik_154 o-hūṃkāraviniṣpannaṃ lokeśaṃ mañcughoṣakam /",
  "SA22nagpindu:328": "paścimāyāṃ sṛjedetāvuttarasyāṃ punaḥ sṛjet //",
  "SA22nagpindu:329": "Pik_155 oṃ-saṃ-bījaviniṣpannaṃ saviṣkambhisamantakam /",
  "SA22nagpindu:330": "ete svanāthamukuṭā varnādyaistatsamāḥ punaḥ //",
  "SA22nagpindu:331": "Pik_156 bhujaiḥ praharaṇaiścāpi svasvādhipatibhiḥ samāḥ /",
  "SA22nagpindu:332": "maitreyaḥ kevalaṃ savye nāgapuṣpaṃ bibharti ca //",
  "SA22nagpindu:333": "Pik_157 saṃśodhyāyatanānyete divyanetrādidāyakāḥ /",
  "SA22nagpindu:334": "sattvānāṃ punarāgatya niṣīdantyāsaneṣu vai //",
  "SA22nagpindu:335": "Pik_158 yamāntakṛnmantrabhavaṃ kṛṣṇaraktasitānanam /",
  "SA22nagpindu:336": "yamāntakaṃ sṛjenmantrī suliṅgagahanākulam //",
  "SA22nagpindu:337": "Pik_159 daṇḍaṃ cakraṃ tathā vajraṃ savyahasteṣu dhārayan /",
  "SA22nagpindu:338": "hṛddeśe tarjanīpāśaṃ ghaṇṭā paraśuṃ ca vāmataḥ //",
  "SA22nagpindu:339": "Pik_160 vighnān santrāsayan ghorān indrādīn sagaṇānapi /",
  "SA22nagpindu:340": "padmasūryaṃ samākramya pūrvasyāṃ diśi tiṣṭhati //",
  "SA22nagpindu:341": "Pik_161 prajñāntakṛnmantrabhavaṃ ratnasambhavamaulikam /",
  "SA22nagpindu:342": "aparājitaṃ sṛjenmantrī śvetābhamahibhūṣaṇam //",
  "SA22nagpindu:343": "Pik_162 sitakṛṣṇaraktavadanaṃ bṛhatkukṣiṃ trilocanam /",
  "SA22nagpindu:344": "daṃṣṭrākarālavikaṭaṃ sphuliṅgagahanākulam //",
  "SA22nagpindu:345": "Pik_163 vajraṃ daṇḍaṃ tathā khaḍgaṃ savyahasteṣu dhārayan /",
  "SA22nagpindu:346": "hṛddeśe tarjanīpāśaṃ ghaṇṭāṃ paraśuṃ ca vāmataḥ //",
  "SA22nagpindu:347": "Pik_164 vighnān santrāsayan ghorān pratyālīḍhapadena tu /",
  "SA22nagpindu:348": "padmasūryaṃ samākramya yāmyāṃ diśi sa tiṣṭhatio //",
  "SA22nagpindu:349": "Pik_165 yamāntakṛnmantrabhavaṃ hayagrīvaṃ sṛjed vratī /",
  "SA22nagpindu:350": "padmarāganibhaṃ tryakṣaṃ raktakṛṣṇasitānanam //",
  "SA22nagpindu:351": "Pik_166 karālāsyaṃ bṛhatkukṣimamitābhakirīṭinam /",
  "SA22nagpindu:352": "pratyālīḍhapadaṃ vīraṃ sphuliṅgagahanākulam //",
  "SA22nagpindu:353": "Pik_167 padmaṃ khaṅgaṃ ca musalaṃ savyahasteṣu bhāvayet /",
  "SA22nagpindu:354": "ghaṇṭāṃ sagarvaparaśuṃ pāśaṃ savyetareṣu ca //",
  "SA22nagpindu:355": "Pik_168 padmasūryaṃ samāruhya vyavalokya diśo daśa /",
  "SA22nagpindu:356": "vidhnasantrāsanaṃ kṛtvā vāruṇyāṃ diśi tiṣṭhati //",
  "SA22nagpindu:357": "Pik_169 vidhnāntakṛnmantrabhavaṃ dundubhisvaramaulikam /",
  "SA22nagpindu:358": "nīlotpaladalaśyāmaṃ sṛjedamṛtakuṇḍalim //",
  "SA22nagpindu:359": "Pik_170 nīlaraktasitāsyaṃ ca karālamukhavibhramam /",
  "SA22nagpindu:360": "bṛhatkukṣiṃ trinayanaṃ raktajvālāvibhūṣitam //",
  "SA22nagpindu:361": "Pik_171 viśvavajraṃ tathā vakraṃ musalaṃ cāpi savyataḥ /",
  "SA22nagpindu:362": "dhārayaṃstarjanīpāśaṃ ghaṇṭāṃ paraśuṃ ca vāmataḥ //",
  "SA22nagpindu:363": "Pik_172 vidhnasantrāsanaṃ kṛtvā pratyālīḍhapadena tu /",
  "SA22nagpindu:364": "padmasūryaṃ samāruhya kauberyāṃ diśi tiṣṭhati //",
  "SA22nagpindu:365": "Pik_173 svamantrākṣaraniṣpannamacalaṃ ca sṛjet punaḥ /",
  "SA22nagpindu:366": "indranīlaprabhaṃ tryakṣaṃ śrīvairocanamaulikam //",
  "SA22nagpindu:367": "Pik_174 daṃṣṭrākarālavadanaṃ kṛṣṇaraktasitānanam /",
  "SA22nagpindu:368": "aṭṭahāsaravaṃ ghoraṃ bṛhatkukṣiṃ mahābalam //",
  "SA22nagpindu:369": "Pik_178 khaṅkaṃ vajraṃ tathā cakraṃ savyahasteṣu dhārayet /",
  "SA22nagpindu:370": "tarjanīṃ cāpi paraśuṃ pāśaṃ vāmeṣu pāṇiṣu //",
  "SA22nagpindu:371": "Pik_176 vighnān jvarādikān hatvā pratyālīḍhapadena tu /",
  "SA22nagpindu:372": "padmasūryaṃ samāruhya vahnisthāne sa tiṣṭhati //",
  "SA22nagpindu:373": "Pik_177 svamantrākṣaraniṣpannaṃ ṭakkirājaṃ sṛjed vratī /",
  "SA22nagpindu:374": "indranīlaprabhaṃ vīraṃ ratnasambhamaulikam //",
  "SA22nagpindu:375": "Pik_178 kṛṣṇaraktasitāsyaṃ ca bṛhatkukṣiṃ bhayānakam / Pik_",
  "SA22nagpindu:376": "dadhānaṃ vajraṃ hūṃkāramudrāṃ paṇidvayena tu //",
  "SA22nagpindu:377": "Pik_179 vajraṃ khaḍgaṃ ca savyābhyāṃ vāmataḥ pāśamaṅkuśam /",
  "SA22nagpindu:378": "pratyālīḍhena sūryastho nairṛtyāṃ vidhnanāśakaḥ //",
  "SA22nagpindu:379": "Pik_180 svamantrākṣaranispannaṃ nīladṇḍaṃ sṛjed vratī /",
  "SA22nagpindu:380": "nīlameghanibhaṃ tryakṣamamitābhakirīṭinam //",
  "SA22nagpindu:381": "Pik_181 nīlaraktasitāsyaṃ ca bṛhatkukṣiṃ bhayāvaham /",
  "SA22nagpindu:382": "daṇḍaṃ khaṅgaṃ tathā savyahasteṣu dhārayan //",
  "SA22nagpindu:383": "Pik_182 hṛdeśe tarjanīpāśaṃ padmaṃ paraśuṃ ca vāmataḥ /",
  "SA22nagpindu:384": "hatvetyupadravabhayaṃ pratyālīḍhapade sthitaḥ //",
  "SA22nagpindu:385": "Pik_183 padmasūryaṃ samāruhya vāyavyāṃ diśi tiṣṭhati /",
  "SA22nagpindu:386": "svamantrākṣaraniṣpannaṃ dundubhisvaramaulikam //",
  "SA22nagpindu:387": "Pik_184 mahābalaṃ sṛjenmantrī nīlotpaladalaprabham /",
  "SA22nagpindu:388": "kṛṇṇaraktasitāsyaṃ ca tryakṣaṃ bhairavanāditam //",
  "SA22nagpindu:389": "Pik_185 nāgabhūṣitasarvāṅgaṃ bṛhatkukṣiṃ bhayānakam /",
  "SA22nagpindu:390": "daṇḍaṃ khaḍgaṃ tathā cakraṃ savyahasteṣu dhārayan //",
  "SA22nagpindu:391": "Pik_186 hṛddeśe tarjanīpāśaṃ padmaṃ paraśuṃ ca vāmataḥ /",
  "SA22nagpindu:392": "ḍākinyādibhayadhvaṃsī pratyālīḍhapadena saḥ //",
  "SA22nagpindu:393": "Pik_187 padmasūryaṃ samāruhya aiśānyāṃ diśi tiṣṭhati /",
  "SA22nagpindu:394": "svamantrākṣaraniṣpannaṃ sṛjeduṣṇīṣacakriṇam //",
  "SA22nagpindu:395": "Pik_188 ākāśaśyāmakaṃ ghoramakṣobhyakṛtaśekharam /",
  "SA22nagpindu:396": "kṛṣṇaraktasitāsyaṃ ca tryakṣaṃ lambodaraṃ vibhum //",
  "SA22nagpindu:397": "Pik_189 vāmadakṣiṇahastābhyāmuṣṇīṣaṃ mūrdhniṃ dhārayan /",
  "SA22nagpindu:398": "vajraṃ padmaṃ ca savyābhyāṃ tarjanīkhaḍgamanyataḥ //",
  "SA22nagpindu:399": "Pik_190 sarvopadravavidhvaṃsī pratyālīḍhapadodyataḥ /",
  "SA22nagpindu:400": "padmasūryaṃ samāruhya brahmasthāne sa tiṣṭhati //",
  "SA22nagpindu:401": "Pik_191 svamantrākṣaraniṣpannaṃ sumbharājaṃ sṛjed vratī /",
  "SA22nagpindu:402": "ākāśasuprabhaṃ tryakṣaṃ kṛṣnaraktasitānanam //",
  "SA22nagpindu:403": "Pik_192 bṛhatkukṣiṃ karālāsyamakṣobhyakṛtaśekharam /",
  "SA22nagpindu:404": "vajraṃ cakraṃ tathā ratnaṃ savyahasteṣu dhārayan //",
  "SA22nagpindu:405": "Pik_193 hṛddeśe tarjanīpāśaṃ padmakhaḍgaṃ ca vāmataḥ /",
  "SA22nagpindu:406": "kālakūṭādikaṃ sarvaviṣaṃ sthāvarajaṅgamam //",
  "SA22nagpindu:407": "hatvā vināyakān sarvān śāntiṃ kṛtvā tu sarvataḥ /",
  "SA22nagpindu:408": "Pik_194 hatvā vināyakān sarvān śāntiṃ kṛtvā tu sarvataḥ /",
  "SA22nagpindu:409": "ājñāṃ sampādya nikhilāṃ pratyālīḍhapade sthitaḥ /",
  "SA22nagpindu:410": "padmasūryaṃ samāruhya bhuvo 'dhastāt sa tiṣṭhati //",
  "SA22nagpindu:411": "Pik_195 utsṛjya maṇḍalaṃ sarvaṃ dvātriṃśaddevatāmayam /",
  "SA22nagpindu:412": "cakramadhyasthito bhūtvā sūkṣmayogamathārabhet //",
  "SA22nagpindu:413": "Pik_196 nāsagre sarṣapaṃ cintet sarṣape sacarācaram /",
  "SA22nagpindu:414": "bhāvayejjñānapadaṃ ramyaṃ rahasyaṃ jñānakalpitam //",
  "SA22nagpindu:415": "Pik_197 sthiraṃ tu sphārayed ratnamasthiraṃ naiva sphārayet /",
  "SA22nagpindu:416": "sphārayet pravarairmeghaibuddhajvālāsamaprabhaiḥ //",
  "SA22nagpindu:417": "Pik_198 bhikṣāśinā na japtapyaṃ na ca bhaikṣarato bhavet /",
  "SA22nagpindu:418": "japenmantramabhinnāṅgaṃ sarvakāmopabhogakṛt //",
  "SA22nagpindu:419": "uccārya saṃsphared vajraṃ samāptau saṃhāramādiśet /",
  "SA22nagpindu:420": "idaṃ tat sarvabuddhānāṃ japoktaṃ paramārthataḥ // Pik_iti / Pik_ 199 //",
  "SA22nagpindu:421": "Pik_200 sūkṣmayogajapaṃ cāpi dvidhā kṛtvā yathāruci /",
  "SA22nagpindu:422": "ātmānaṃ ca punarmantrī tathatāyāṃ praveśayet //",
  "SA22nagpindu:423": "Pik_201 maṇḍalasthāścaturdevyo na paśyantyastataḥ patim /",
  "SA22nagpindu:424": "gāthācatuṣṭayenetthaṃ bodhayanti mahāsukham //",
  "SA22nagpindu:425": "Pik_202 tvaṃ vajrasattva bhuvaneśvara sattvadhāto trāyāhi māṃ ratinojñamahārthakāmaiḥ /",
  "SA22nagpindu:426": "kāmāhi māṃ janaka sattvamahāgrabandho yadīcchase jīvatu mahya nātha //",
  "SA22nagpindu:427": "Pik_203 tvaṃ vajrakāya bahusattvapriyāgracakra buddhārthabodhiparamārthahitānudarśīṃ /",
  "SA22nagpindu:428": "rāgeṇa rāgasamayāṃ mama kāmayasva yadīcchase jīvatu mahya nātha //",
  "SA22nagpindu:429": "Pik_204 tvaṃ vajravāca sakalasya hitānukampī lokārthakāryakaraṇe sada sampravṛttaḥ /",
  "SA22nagpindu:430": "kāmāhi māṃ sugatacarya samantabhadra yadīcchase jīvatu mahya nātha //",
  "SA22nagpindu:431": "Pik_205 tvaṃ vajrakāma samayāgra mahāhitārtha saṃbuddhavaṃśatilakaḥ samatānukampī /",
  "SA22nagpindu:432": "kāmāhi mām guṇanidhiṃ bahuratnabhūtāṃ yadīcchase jīvatu mahya nātha //",
  "SA22nagpindu:433": "Pik_206 evamutthāpitaṃ nāthaṃ sadbhūtaguṇakīrtanaiḥ /",
  "SA22nagpindu:434": "akṣobhyādisvabhāvena saṃstuvanti tathāgatāḥ //",
  "SA22nagpindu:435": "Pik_207 akṣobhyavajra mahājñāna vajradhātu mahābudha /",
  "SA22nagpindu:436": "trimaṇḍala trivajrāgra bhāṣa guhyaṃ namo 'stu te //",
  "SA22nagpindu:437": "Pik_208 vairocana mahāśuddha vajraśānta mahārate /",
  "SA22nagpindu:438": "prakṛtiprabhāsvarān dharmān deśa vajra namo 'stu te //",
  "SA22nagpindu:439": "Pik_209 ratnarāja sugambhīra khavajrākāśanirmala /",
  "SA22nagpindu:440": "svabhāvaśuddha nirlepa bhāṣa guhyaṃ namo 'stu te //",
  "SA22nagpindu:441": "Pik_210 vajrāmitamahārāja nirvikalpa khavajriṇa /",
  "SA22nagpindu:442": "rājapāramitāprāpta bhāṣa vajra namo 'stu te //",
  "SA22nagpindu:443": "Pik_211 amoghavajra saṃbuddha sarvāśāparipūraka /",
  "SA22nagpindu:444": "śuddhasvabhāvasambhūta vajrasattva namo 'stu te //",
  "SA22nagpindu:445": "Pik_212 nutvātha buddhaiaranurāgya cakram prakāśya guhyaṃ paramaṃ yathāyatham /",
  "SA22nagpindu:446": "svakāyacakre viniveśya cakram mahāsukhastiṣṭhati nātha ekaḥ //",
  "SA22nagpindu:447": "evaṃ caturyogakarastu yogī hūṃkāragarbhaṃ pravicintya lokam /",
  "SA22nagpindu:448": "dṛṣṭvā japat tadbhavavajrasattvaṃ vyutthāya taddhīrvicared yathāvad // iti / Pik_213 //",
  "SA22nagpindu:449": "Pik_214 samādhimālambayan mantrī śuṣkamūrtiryadā bhavet /",
  "SA22nagpindu:450": "vicintayedimaṃ yogaṃ kāyavākcittaprīṇanam //",
  "SA22nagpindu:451": "Pik_215 vitastimātramākramya mūrdhni maṇḍalakalpanā /",
  "SA22nagpindu:452": "oṃkāraṃ tatragaṃ dhvātvā pañcāmṛtanipātanam //",
  "SA22nagpindu:453": "Pik_216 anena vajrayogena tejasvī bhavati kṣaṇāt /",
  "SA22nagpindu:454": "kāyavākcittasausthityaṃ labhate nātra saṃśayaḥ //",
  "SA22nagpindu:455": "Pik_217 evamabhyāsato mantrī śodhayed bodhayet yathā /",
  "SA22nagpindu:456": "hṛtkaṇṭhaṃ caiva saṃśodhyaṃ prīṇayecca tathāgatān //",
  "SA22nagpindu:457": "Pik_218 hūṃkāreṇa ca saṃśodhya āḥkāreṇa tu bodhayet /",
  "SA22nagpindu:458": "jvālayet praṇavākrāntam iyamāhāraśodhanā //",
  "SA22nagpindu:459": "Pik_219 kaṇṭhe śaṅkhaṃ vicintyādau tasmin hrīḥkārasambhavam /",
  "SA22nagpindu:460": "padmamaṣṭadalaṃ cinted hūṃkāraṃ karṇikopari //",
  "SA22nagpindu:461": "Pik_220 hūṃkārajaṃ mahāvajraṃ pañcaśūkaṃ vibhāvayet /",
  "SA22nagpindu:462": "madhyaśūkāgre sañcinted oṃkāraṃ kaṇṭhaśodhanam //",
  "SA22nagpindu:463": "Pik_221 meghanādaṃ hṛdi dhyātvā triśikhāgniṃ tataḥ spharet /",
  "SA22nagpindu:464": "tatrāhāraṃ ca juhuyād homamādhyātmikaṃ tvidam //",
  "SA22nagpindu:465": "Pik_222 vāyavyaṃ dīpayed agniṃ vāruṇaṃ pacate tu saḥ /",
  "SA22nagpindu:466": "māhendramaṇḍalaṃ sthānaṃ yatra sañcarate haviḥ //",
  "SA22nagpindu:467": "Pik_223 annaṃ pānaṃ ca yat kiñcit tat sarvaṃ vāruṇena tu /",
  "SA22nagpindu:468": "aśanaṃ mukhapadmena hṛtpadyaṃ sampraveśayet //",
  "SA22nagpindu:469": "Pik_224 nābhipadmagataṃ paścāt sampuṭīkaraṇayogataḥ /",
  "SA22nagpindu:470": "gudapadmād vinirgatya bhaśmāntaṃ ca vinirdiśet //",
  "SA22nagpindu:471": "na jarā nāpi rogaśca na mṛtyurna viṣādikam /",
  "SA22nagpindu:472": "nākālamaraṇaṃ tasya sarvopadravanāśanam // Pik_iti / Pik_ 225 //",
  "SA22nagpindu:473": "Pik_226 śrīvajramālāvaramanthanena gūḍhaṃ samājāmbunidhiṃ mathitvā /",
  "SA22nagpindu:474": "yat sādanāṅgāmṛtamāpi tena lokaḥ samasto 'maratāmupaitu //",
  "SA22nagpindu:475": "// piṇḍīkramasādhanaṃ samāptam //",
  "SA22nagpindu:476": "/ kṛtirācāryaśrīnāgārjunapādānām /"
}