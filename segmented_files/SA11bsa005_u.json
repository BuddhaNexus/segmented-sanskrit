{
  "SA11bsa005_u:0_0": "Caryāsaṅgrahapradīpaḥ (Csp)",
  "SA11bsa005_u:1_0": "namo lokeśvarāya",
  "SA11bsa005_u:csp_1_0": "madādyaśeṣamūḍhānāṃ yasya vacanaraśmibhiḥ /",
  "SA11bsa005_u:csp_1_1": "phullatāmeti hṛtpadmaṃ taṃ vande puruṣottamam //",
  "SA11bsa005_u:csp_2_0": "pāramiṃ guhyamantraṃ ca śritvā bodhiḥ prasidhyati /",
  "SA11bsa005_u:csp_2_1": "gurubuddhoktitastvevaṃ tadartho likhyate mayā //",
  "SA11bsa005_u:csp_3_0": "guhyamantro 'tra no vācyaḥ pāramīnayacārikāḥ /",
  "SA11bsa005_u:csp_3_1": "bodhisattvasya caryāstu samāsena likhāmyaham //",
  "SA11bsa005_u:csp_4_0": "dhīmataḥ saṃvaro grāhyo bodhicittapuraḥ saraḥ /",
  "SA11bsa005_u:csp_4_1": "ālokyāśeṣasūtrāṇi śāstraṃ śravyaṃ samastakam //",
  "SA11bsa005_u:csp_5_0": "kāyena manasā vācā yathoktān saṃvarān tribhiḥ /",
  "SA11bsa005_u:csp_5_1": "rakṣedakṣuṇṇaśuddhāṃśca śīlāṃśca pariśodhayet //",
  "SA11bsa005_u:csp_6_0": "bhaktamātrāṃ vijānīyād indriyadvāramāvaret /",
  "SA11bsa005_u:csp_6_1": "rātreḥ pūrve 'pare bhāge na suptvā yogamācaret //",
  "SA11bsa005_u:csp_7_0": "aṇumātreṣvavadyeṣu hyatimātraṃ bibheti ca /",
  "SA11bsa005_u:csp_7_1": "rātrerbhāgatrayaṃ kṛtvā hyantye bhāge tu jāgṛyāt //",
  "SA11bsa005_u:csp_8_0": "prakṣālayenmukhādīn vākṣālanaṃ vāpi yujyate /",
  "SA11bsa005_u:csp_8_1": "sukhāsanaṃ samāśritya dharmāṇāṃ dharmatāṃ smaret //",
  "SA11bsa005_u:csp_9_0": "nimittaiḥ kṣobhato 'śakye tūttthāyābhāsavastuṣu /",
  "SA11bsa005_u:csp_9_1": "māyāvattvena samprekṣya puṇyayogāṃstadantare //",
  "SA11bsa005_u:csp_10_0": "pūrayeccāpi saptāṅgān vipulāṃ praṇidhiṃ caret /",
  "SA11bsa005_u:csp_10_1": "bhāvayed bhāvanāṃ pūrvā kāle 'tha bhojanasya ca //",
  "SA11bsa005_u:csp_11_0": "etanniḥ sārakāyena paraṃ sāraṃ gaveṣayan /",
  "SA11bsa005_u:csp_11_1": "kāyaṃ naukādhiyā rakṣed na bhuṅktāṃ sthūlatākṛte //",
  "SA11bsa005_u:csp_12_0": "rasāsaktyā na bhuñjīta caturdhānnaṃ vibhajya ca /",
  "SA11bsa005_u:csp_12_1": "devebhyo vinivedyādiṃ dharmapālāya tatparam //",
  "SA11bsa005_u:csp_13_0": "baliṃ suvipulāṃ dadyāt śeṣaṃ svabhuktapītataḥ /",
  "SA11bsa005_u:csp_13_1": "dadyācca sarvabhūtebhyaḥ kathātantraṃ tadantare //",
  "SA11bsa005_u:csp_14_0": "kuryādadbhutavārttā ca kiñcidutthāya sañcaret /",
  "SA11bsa005_u:csp_14_1": "parikrāmedadhiṣṭhānaṃ japaṃ vā granthavācanam //",
  "SA11bsa005_u:csp_15_0": "sugatapratimāṃ kuryād yāvat svedo na jāyate /",
  "SA11bsa005_u:csp_15_1": "kuryāt, pradakṣiṇāṃ tāvad akṣubdhaḥ praṇidhiṃ bahum //",
  "SA11bsa005_u:csp_16_0": "dharmacaryā daśaproktāḥ maitreyeṇa, samāsataḥ /",
  "SA11bsa005_u:csp_16_1": "caredakṣiptacittena māyaupamyaṃ ca saṃsmaran //",
  "SA11bsa005_u:csp_17_0": "yadi syāt pūjayet saṅghaṃ kuryād vā bālakotsavam /",
  "SA11bsa005_u:csp_17_1": "anāthebhyaḥ sudānaṃ tu yogine puṇyasañcayaḥ //",
  "SA11bsa005_u:csp_18_0": "pūrṇeṣu dinakṛtyeṣu bhāge ca prathame niśaḥ /",
  "SA11bsa005_u:csp_18_1": "dharmatā niṣprapañcāpi tathā cittaṃ ca yojayet //",
  "SA11bsa005_u:csp_19_0": "prāptāyāṃ madhyarātrau ca utthānābhāsasañjñayā /",
  "SA11bsa005_u:csp_19_1": "siṃhanidrā yathā tadvat śubhanidrāṃ samāśrayet //",
  "SA11bsa005_u:csp_20_0": "prāyo dhyānadṛḍhe citte kāyavākpuṇyagauṇatā /",
  "SA11bsa005_u:csp_20_1": "asaṃspṛṣṭe samādhau vā lokakalpapravṛttaye //",
  "SA11bsa005_u:2_0": "kāyapuṇyaṃ yathāśakti, lokacitte 'same sati /",
  "SA11bsa005_u:csp_22_0": "dharmāśca laukikān pṛcched, nijamitrasamīritaḥ /",
  "SA11bsa005_u:csp_22_1": "nepālaviṣaye kṛtavān, ratirmantranaye na ced //",
  "SA11bsa005_u:3_0": "evaṃ sthavira ! karttavyam /23, a /",
  "SA11bsa005_u:4_0": "caryāsaṅgrahapradīpo mahāpaṇḍitācārya - dīpaṅkara - śrījñānakṛtaḥ samāptaḥ /"
}