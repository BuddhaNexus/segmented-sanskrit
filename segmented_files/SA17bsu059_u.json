{
    "SA17bsu059_u:0_0": "Samyaksambuddhabhāṣitaṃ pratimālakṣaṇam",
    "SA17bsu059_u:1_0": "namo buddhāya /",
    "SA17bsu059_u:2_0": "[p._126]",
    "SA17bsu059_u:2_1": "evaṃ mayā śrutamekasmin samaye buddho bhagavān jetavane viharati sma /",
    "SA17bsu059_u:2_2": "tuṣitavarabhavanāt māturdharmadeśanāgamanakālasamaye śāriputro bhagavantametadavocat /",
    "SA17bsu059_u:2_3": "bhagavan bhagavatā gate parinirvṛte vā śrāddhaiḥ kulaputraiḥkuladuhitṛbhiśca kathaṃ pratipattavyam /",
    "SA17bsu059_u:2_4": "bhagavānāha - śāriputra! mayi gate parinirvṛte vā nyagrodhaparimaṇḍalaṃ kāyaṃ kartavyam /",
    "SA17bsu059_u:2_5": "yāvatkāyaṃ tāvadvyāmaṃ yāvadvyāmaṃ tāvatkāyaṃ pūjāsatkārārthaṃ pratimā kartavyā /",
    "SA17bsu059_u:2_6": "sarvāṅgopāṅgāvayavasthaulyalāvaṇyalālityasalīlatvaṃ chatrākāraṃ śiraḥskandhāṃ(dhasu)saṃsthitoṣṇīṣatvādisusaṃsthānāt /",
    "SA17bsu059_u:2_7": "tatrāyāmavistāroccheda(tsedha)sandhibandhanirgamaiḥ pramāṇaṃ bodhisattvānāṃ sugatānāñca pravakṣyāmi tacchṛṇu /",
    "SA17bsu059_u:2_8": "tatra tāvat pramāṇaṃ bodhisattvānāṃ svenāṅgulīpramāṇenaśataṃ viṃśatyuttaram,",
    "SA17bsu059_u:2_9": "buddhānāṃ pañcaviṃśatyuttaram /",
    "SA17bsu059_u:3_0": "caturaṅgulamuṣṇīṣaṃ keśasthānaṃ tathaiva ca /",
    "SA17bsu059_u:3_1": "sārddhatrayodasī(śī) mātrā mukhabhāgañca tattrayam // 1 //",
    "SA17bsu059_u:3_2": "lalāṭaṃ nāsikāñcādhaścibukāntaṃ tṛtīyakam /",
    "SA17bsu059_u:3_3": "caturaṅgulaṃ lalāṭaṃ ca tulyaṃ nāsikayā bhavet // 2 //",
    "SA17bsu059_u:4_0": "sādhikaṃ cibukāntaṃ tu cibukaṃ dvayaṅgulaṃ bhavet /",
    "SA17bsu059_u:4_1": "āyāmaṃ nirgamāccaiva caturaṅgulamiṣyate // 3 //",
    "SA17bsu059_u:5_0": "caturaṅgulau kapolau tu karṇamūlādviniḥśri(sṛ)tau /",
    "SA17bsu059_u:5_1": "hanuḥ syāttryaṅgulocchedo(tsedho)vistāre dvayaṅgulaśca saḥ // 4 //",
    "SA17bsu059_u:6_0": "sā 'dhikaḥ paripūrṇṇaḥ syānmahāsiṃhahanuryathā /",
    "SA17bsu059_u:6_1": "adharo dvayaṅgulāyāmo nirgamoccheda(tsedha)mātrikaḥ // 5 //",
    "SA17bsu059_u:6_2": "[p._127]",
    "SA17bsu059_u:7_0": "madhye syācchobhanā rekhā sṛkkaṇī mātṛke smṛtau /",
    "SA17bsu059_u:7_1": "caturaṅgulamāyāmaṃ vaktraṃ kuryādvicakṣaṇaḥ // 6 //",
    "SA17bsu059_u:8_0": "yathopapannasthānāścatvāriṃśaddaśanāḥ smṛtāḥ /",
    "SA17bsu059_u:8_1": "uttaroṣṭho 'ṅgulārddhaḥ syāttathaiboccheda(tsedha)nirgamaḥ // 7 //",
    "SA17bsu059_u:9_0": "tribhāgāṅgulikā kāryā godhistasyaiva ca sthitā /",
    "SA17bsu059_u:9_1": "nāsā dvayaṅgulavistārā sārddhamaṅgulamunnatā // 8 //",
    "SA17bsu059_u:10_0": "arddhāṅgule same vṛtte nāsāyāḥ śrotasī smṛtau(te) /",
    "SA17bsu059_u:10_1": "nāsāvaṃśaḥ samo madhye vistāreṇārddhamātrikaḥ // 9 //",
    "SA17bsu059_u:11_0": "netrāntaro 'ṅgule jñeyo netre ca caturaṅgule /",
    "SA17bsu059_u:11_1": "vistārāddvayaṅgulau madhye tayostārā tribhāgikī // 10 //",
    "SA17bsu059_u:12_0": "dṛṣṭiḥ syātpañcabhāgena dvayaṅgulaṃ tryaṅgulaṃ tayoḥ /",
    "SA17bsu059_u:12_1": "aṅgulasya caturthāṃśo visṛ(stṛ)to 'kṣiḥ samudgakaḥ // 11 //",
    "SA17bsu059_u:13_0": "padmapatrākṛtiḥ kāryo netrakośo 'ṅgulitrayam /",
    "SA17bsu059_u:13_1": "karavīrasamaṃ sūtraṃ netrayoḥ nāsikāpuṭe // 12 //",
    "SA17bsu059_u:14_0": "tārā same ca cibuke sṛkkaṇī pariyojayet /",
    "SA17bsu059_u:14_1": "antarastu bhruvaḥ kāryaṃ vistṛtaṃ sārddhamaṅgulam // 13 //",
    "SA17bsu059_u:15_0": "madhye corṇātra vijñeyā śubhā pūrṇendusannibhā /",
    "SA17bsu059_u:15_1": "nāsikāvatsa(vaṃśa)sūtrorṇā tathā mūrdhva(rdha)jasaṃsthitam // 14 //",
    "SA17bsu059_u:16_0": "śiromaṇīḥ sa vijñeyaḥ suprabho vimalastathā /",
    "SA17bsu059_u:16_1": "caturaṅgulamucchedāllalāṭopari mastakam // 15 //",
    "SA17bsu059_u:16_2": "[p._128]",
    "SA17bsu059_u:17_0": "chatrākāraṃ śubhannīlaṃ dakṣiṇāvarttastūrdhvajam /",
    "SA17bsu059_u:17_1": "bhrurekhā syāccaturmātrā karṇāgraṃ cāpi tatsamam // 16 //",
    "SA17bsu059_u:18_0": "niḥsṛtau dvayaṅgulau karṇau tayoḥ patrārddhamātrikaḥ /",
    "SA17bsu059_u:18_1": "ucchedo(tsedho)mātriko jñeyaḥ śliṣṭaśrotrārddhamātrikāḥ // 17 //",
    "SA17bsu059_u:19_0": "aṅgulasya caturthāṃsaḥ(śaḥ) karṇāvarttastu vistaraiḥ /",
    "SA17bsu059_u:19_1": "sārddhamātre 'ṅgule dve syāt karṇastvantarabhāgataḥ // 18 //",
    "SA17bsu059_u:20_0": "pārśvau syātāṃ yathāśobhaṃ keśāścāpi tathaiva ca /",
    "SA17bsu059_u:20_1": "arddhapañcamamātrañca karṇapatramapāṅgataḥ // 19 //",
    "SA17bsu059_u:21_0": "karṇātkarṇāntavijñeyo mastako 'ṣṭādaśāṅgulaḥ /",
    "SA17bsu059_u:21_1": "caturdaśāṅgulaṃ pṛṣṭhaṃ tayorantaramiṣyate // 20 //",
    "SA17bsu059_u:22_0": "catvāriṃśanmātrañca śiraḥ syātpariṇāhataḥ /",
    "SA17bsu059_u:22_1": "grīvocchedā(tsedhā)ccaturmātrā vistārādaṣṭamātṛkā // 21 //",
    "SA17bsu059_u:23_0": "pariṇāhācca kartavyā caturviśatimātṛkā /",
    "SA17bsu059_u:23_1": "grīvāntānyaṅgulānyaṣṭau skandhāṃso(śo) dvādaśāṅgulaḥ // 22 //",
    "SA17bsu059_u:24_0": "vināntarāṃśo vṛttaśca skandhaḥ syāllakṣaṇānvitaḥ /",
    "SA17bsu059_u:24_1": "catvāriṃśatamātrāṇi bāhau cāyāmamiṣyate // 23 //",
    "SA17bsu059_u:25_0": "bāhurviśatimātrastu prabāhuḥ ṣoḍaśastathā /",
    "SA17bsu059_u:25_1": "dvādaśāṅgulahastāgraṃ maṇibandhātprakīrtitaḥ // 24 //",
    "SA17bsu059_u:26_0": "kukuṇīmaṇibandhābhyāmaṅgulañcāṅgulaṃ smṛtam /",
    "SA17bsu059_u:26_1": "bāhau madhyaparikṣepa iṣṭo viṃśatimātṛkaḥ // 25 //",
    "SA17bsu059_u:27_0": "prabāhuḥ ṣoḍaśaḥśca syāddviṣaṭko maṇibandhane /",
    "SA17bsu059_u:27_1": "āyāmaṃ saptakaṃ pāṇau talavistārapañcakam // 26 //",
    "SA17bsu059_u:27_2": "[p._129]",
    "SA17bsu059_u:28_0": "śaṅkhañcakraṃ tale nyastaṃ padma cākuliśāṅkuśam /",
    "SA17bsu059_u:28_1": "sarvalakṣaṇarūpiṇyo le(re)khāḥ kāryyāḥ pṛthagvidhāḥ // 27 //",
    "SA17bsu059_u:29_0": "pañcāṅgulāyatā madhyā parvārddhonā pradeśinī /",
    "SA17bsu059_u:29_1": "aṅgulārddhavihīnā tu kartavyā syādanāmikā // 28 //",
    "SA17bsu059_u:30_0": "anāmikātaḥ parvonā kartavyā tu kanīyasī /",
    "SA17bsu059_u:30_1": "triparvāṅgulayaḥ sarvāḥ parvārddhena nakhāḥśubhāḥ // 29 //",
    "SA17bsu059_u:31_0": "maṇibandhopariṣṭāttu so 'ṅguṣṭhaścaturaṅgulaḥ /",
    "SA17bsu059_u:31_1": "tāvāneva parikṣepaḥ parvārddhena nakhaśca saḥ // 30 //",
    "SA17bsu059_u:32_0": "aṅguṣṭhāttu pradeśinyā antaraṃ tryaṅgulaṃ smṛtam /",
    "SA17bsu059_u:32_1": "kanīyasī maṇibandhādbhavetpañcāṅgulāyataḥ // 31 //",
    "SA17bsu059_u:33_0": "agrahastaparikṣepo vijñeyo dvādaśāṅgulaḥ /",
    "SA17bsu059_u:33_1": "dairghyāttṛtīyabhāgaḥ syāt svāṅgulīnāṃ parigrahaḥ // 32 //",
    "SA17bsu059_u:34_0": "grīvāhṛdayayormadhye sārddhadvādaśamātrikaḥ /",
    "SA17bsu059_u:34_1": "hṛnnābhyośca catuścaiva stanayorapi cāntaram // 33 //",
    "SA17bsu059_u:35_0": "stanayorupariṣṭācca kakṣe kārye ṣaḍaṅgule /",
    "SA17bsu059_u:35_1": "tadūrdhvaṃ punarāskandhānnavamātrā prakīrtitā // 34 //",
    "SA17bsu059_u:36_0": "uraso 'pi ca vistāraḥ pañcaviṃśatimātrikaḥ /",
    "SA17bsu059_u:36_1": "pariṇāhāduraḥ kāryo vistārāttriguṇaṃ śubham // 35 //",
    "SA17bsu059_u:37_0": "stananābhyantare(raṃ) caiva ṣoḍaśāṅgulamiṣyate /",
    "SA17bsu059_u:37_1": "avedhaḥ sandhirandhrābhyāṃ nābhimaṇḍalamaṅgulam // 36 //",
    "SA17bsu059_u:38_0": "nābhimadhyāt parikṣepaḥ ṣaṭcatvāriṃśadaṅgulaḥ /",
    "SA17bsu059_u:38_1": "aṣṭādaśāṅgulaṃ caiva vistāreṇa kaṭirbhavet // 37 //",
    "SA17bsu059_u:38_2": "[p._130]",
    "SA17bsu059_u:39_0": "nābhimeḍhrontarañca syāt sārddhadvādaśamātrikaḥ /",
    "SA17bsu059_u:39_1": "tadarddhena tu meḍhraḥ syādapānapariṇāhataḥ // 38 //",
    "SA17bsu059_u:39_2": "pañcamātrāyatau lambau vṛṣaṇau caturaṅgulau /",
    "SA17bsu059_u:39_3": "pañcamātrāṇi catvāri vistārāyāmatastayoḥ // 39 //",
    "SA17bsu059_u:40_0": "ūrū samāhitau kāryau pañcaviṃśatimātrikau /",
    "SA17bsu059_u:40_1": "suvistāraṃ tayormadhyaṃ māpayeddvādaśāṅgulam // 40 //",
    "SA17bsu059_u:41_0": "pariṇāhe 'pi kartavyaṃ śubhaṃ ṣaṭtriṃśadaṅgulam /",
    "SA17bsu059_u:41_1": "madhye................caturaṅgulaṃ tu jānutaḥ // 41 //",
    "SA17bsu059_u:42_0": "sandhibandhaścaturmātrā tridvikaṃ jānugulphakam /",
    "SA17bsu059_u:43_0": "guḍhagulphaṃ sirāsthitvaṃ sukumārau stayau(?) śubhau // 42 //",
    "SA17bsu059_u:44_0": "ṛjuvṛttāyate jaṃghā(ghe) pañcaviṃśatimātrike /",
    "SA17bsu059_u:44_1": "tayormadhye pariṇāha ekaviṃśatimātrikaḥ // 43 //",
    "SA17bsu059_u:45_0": "caturdaśāṅgulā 'yatā gulphāntāścaturaṅgulam /",
    "SA17bsu059_u:45_1": "gulpho dvādaśakāyāmaḥ pādaḥ pādārddhavistaraḥ // 44 //",
    "SA17bsu059_u:46_0": "pārśvau dvayaṅgulavistārau pārṣṇī ca caturaṅgule /",
    "SA17bsu059_u:46_1": "ṣaḍaṅgulaṃ tva(su)vistāraṃ triguṇaṃ pariṇāhataḥ // 45 //",
    "SA17bsu059_u:47_0": "pañcāṅgulyo dviparvāṇi parvārddhena nakhāḥ smṛtāḥ /",
    "SA17bsu059_u:47_1": "pañcāṅgulaṃ parikṣepādaṅguṣṭhastryaṅgulāyataḥ // 46 //",
    "SA17bsu059_u:48_0": "aṅguṣṭhakasamā caiva āyāmena pradeśinī /",
    "SA17bsu059_u:48_1": "ṣoḍaśāṣṭāṣṭabhāgena śeṣā hīnāḥ parasparam // 47 //",
    "SA17bsu059_u:49_0": "aṅgulyo mātrikocchre(tse)dhādaṅguṣṭhaḥ sārddhamātrikaḥ /",
    "SA17bsu059_u:49_1": "tatra tāmranakhāḥ sārddhāṃ aṅgulāḥ komalāyatāḥ // 48 //",
    "SA17bsu059_u:49_2": "[p._131]",
    "SA17bsu059_u:50_0": "kūrmapṛṣṭhasamau pūrṇau pādau bahiralaṃkṛtau /",
    "SA17bsu059_u:50_1": "samaśliṣṭānatācchidrau supratiṣṭhataḥ(ṣṭhita) lakṣaṇaiḥ // 49 //",
    "SA17bsu059_u:51_0": "tayostalaṃ sucakrādicitrākāraṃ tu kārayet /",
    "SA17bsu059_u:51_1": "pādāvatra praśaṃsanti sarvajñā hatakilviṣāḥ // 50 //",
    "SA17bsu059_u:52_0": "kukkuṭāṇḍaṃ tilākāraṃ caturasraṃ suvartulam /",
    "SA17bsu059_u:52_1": "sarvasāmānyaliṅgānāṃ mukhametaccaturvidham // 51 //",
    "SA17bsu059_u:53_0": "mahānarasurastrīṇāṃ kukkuṭāṇḍaṃ tilākṛtiḥ /",
    "SA17bsu059_u:53_1": "lāvaṇyaṃ darśanīyaṃ tat kārayet mukhadvayam // 52 //",
    "SA17bsu059_u:54_0": "pretabhūtapiśācānāṃ rakṣasāṃ vikṛtākṛtiḥ /",
    "SA17bsu059_u:54_1": "maṇḍalaṃ caturasraṃ ca kārayettu mukhadvayam // 53 //",
    "SA17bsu059_u:55_0": "samā dṛṣṭiḥ prasannā ca buddhānāmavalokane /",
    "SA17bsu059_u:55_1": "nādho nordhvaṃ na dainyena saṃyuktaṃ sarvadarśinām // 54 //",
    "SA17bsu059_u:56_0": "// iti samyaksambuddhabhāṣitaṃ pratimālakṣaṇaṃ samāptam //"
}