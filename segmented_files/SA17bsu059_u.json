{
  "SA17bsu059_u:0": "Samyaksambuddhabhāṣitaṃ pratimālakṣaṇam",
  "SA17bsu059_u:1": "namo buddhāya /",
  "SA17bsu059_u:2": "[p._126]",
  "SA17bsu059_u:3": "evaṃ mayā śrutamekasmin samaye buddho bhagavān jetavane viharati sma /",
  "SA17bsu059_u:4": "tuṣitavarabhavanāt māturdharmadeśanāgamanakālasamaye śāriputro bhagavantametadavocat /",
  "SA17bsu059_u:5": "bhagavan bhagavatā gate parinirvṛte vā śrāddhaiḥ kulaputraiḥkuladuhitṛbhiśca kathaṃ pratipattavyam /",
  "SA17bsu059_u:6": "bhagavānāha - śāriputra! mayi gate parinirvṛte vā nyagrodhaparimaṇḍalaṃ kāyaṃ kartavyam /",
  "SA17bsu059_u:7": "yāvatkāyaṃ tāvadvyāmaṃ yāvadvyāmaṃ tāvatkāyaṃ pūjāsatkārārthaṃ pratimā kartavyā /",
  "SA17bsu059_u:8": "sarvāṅgopāṅgāvayavasthaulyalāvaṇyalālityasalīlatvaṃ chatrākāraṃ śiraḥskandhāṃ(dhasu)",
  "SA17bsu059_u:9": "saṃsthitoṣṇīṣatvādisusaṃsthānāt /",
  "SA17bsu059_u:10": "tatrāyāmavistāroccheda(tsedha)",
  "SA17bsu059_u:11": "sandhibandhanirgamaiḥ pramāṇaṃ bodhisattvānāṃ sugatānāñca pravakṣyāmi tacchṛṇu /",
  "SA17bsu059_u:12": "tatra tāvat pramāṇaṃ bodhisattvānāṃ svenāṅgulīpramāṇenaśataṃ viṃśatyuttaram,",
  "SA17bsu059_u:13": "buddhānāṃ pañcaviṃśatyuttaram /",
  "SA17bsu059_u:14": "caturaṅgulamuṣṇīṣaṃ keśasthānaṃ tathaiva ca /",
  "SA17bsu059_u:15": "sārddhatrayodasī(śī) mātrā mukhabhāgañca tattrayam // 1 //",
  "SA17bsu059_u:16": "lalāṭaṃ nāsikāñcādhaścibukāntaṃ tṛtīyakam /",
  "SA17bsu059_u:17": "caturaṅgulaṃ lalāṭaṃ ca tulyaṃ nāsikayā bhavet // 2 //",
  "SA17bsu059_u:18": "sādhikaṃ cibukāntaṃ tu cibukaṃ dvayaṅgulaṃ bhavet /",
  "SA17bsu059_u:19": "āyāmaṃ nirgamāccaiva caturaṅgulamiṣyate // 3 //",
  "SA17bsu059_u:20": "caturaṅgulau kapolau tu karṇamūlādviniḥśri(sṛ)tau /",
  "SA17bsu059_u:21": "hanuḥ syāttryaṅgulocchedo(tsedho)vistāre dvayaṅgulaśca saḥ // 4 //",
  "SA17bsu059_u:22": "sā 'dhikaḥ paripūrṇṇaḥ syānmahāsiṃhahanuryathā /",
  "SA17bsu059_u:23": "adharo dvayaṅgulāyāmo nirgamoccheda(tsedha)mātrikaḥ // 5 //",
  "SA17bsu059_u:24": "[p._127]",
  "SA17bsu059_u:25": "madhye syācchobhanā rekhā sṛkkaṇī mātṛke smṛtau /",
  "SA17bsu059_u:26": "caturaṅgulamāyāmaṃ vaktraṃ kuryādvicakṣaṇaḥ // 6 //",
  "SA17bsu059_u:27": "yathopapannasthānāścatvāriṃśaddaśanāḥ smṛtāḥ /",
  "SA17bsu059_u:28": "uttaroṣṭho 'ṅgulārddhaḥ syāttathaiboccheda(tsedha)nirgamaḥ // 7 //",
  "SA17bsu059_u:29": "tribhāgāṅgulikā kāryā godhistasyaiva ca sthitā /",
  "SA17bsu059_u:30": "nāsā dvayaṅgulavistārā sārddhamaṅgulamunnatā // 8 //",
  "SA17bsu059_u:31": "arddhāṅgule same vṛtte nāsāyāḥ śrotasī smṛtau(te) /",
  "SA17bsu059_u:32": "nāsāvaṃśaḥ samo madhye vistāreṇārddhamātrikaḥ // 9 //",
  "SA17bsu059_u:33": "netrāntaro 'ṅgule jñeyo netre ca caturaṅgule /",
  "SA17bsu059_u:34": "vistārāddvayaṅgulau madhye tayostārā tribhāgikī // 10 //",
  "SA17bsu059_u:35": "dṛṣṭiḥ syātpañcabhāgena dvayaṅgulaṃ tryaṅgulaṃ tayoḥ /",
  "SA17bsu059_u:36": "aṅgulasya caturthāṃśo visṛ(stṛ)to 'kṣiḥ samudgakaḥ // 11 //",
  "SA17bsu059_u:37": "padmapatrākṛtiḥ kāryo netrakośo 'ṅgulitrayam /",
  "SA17bsu059_u:38": "karavīrasamaṃ sūtraṃ netrayoḥ nāsikāpuṭe // 12 //",
  "SA17bsu059_u:39": "tārā same ca cibuke sṛkkaṇī pariyojayet /",
  "SA17bsu059_u:40": "antarastu bhruvaḥ kāryaṃ vistṛtaṃ sārddhamaṅgulam // 13 //",
  "SA17bsu059_u:41": "madhye corṇātra vijñeyā śubhā pūrṇendusannibhā /",
  "SA17bsu059_u:42": "nāsikāvatsa(vaṃśa)sūtrorṇā tathā mūrdhva(rdha)jasaṃsthitam // 14 //",
  "SA17bsu059_u:43": "śiromaṇīḥ sa vijñeyaḥ suprabho vimalastathā /",
  "SA17bsu059_u:44": "caturaṅgulamucchedāllalāṭopari mastakam // 15 //",
  "SA17bsu059_u:45": "[p._128]",
  "SA17bsu059_u:46": "chatrākāraṃ śubhannīlaṃ dakṣiṇāvarttastūrdhvajam /",
  "SA17bsu059_u:47": "bhrurekhā syāccaturmātrā karṇāgraṃ cāpi tatsamam // 16 //",
  "SA17bsu059_u:48": "niḥsṛtau dvayaṅgulau karṇau tayoḥ patrārddhamātrikaḥ /",
  "SA17bsu059_u:49": "ucchedo(tsedho)mātriko jñeyaḥ śliṣṭaśrotrārddhamātrikāḥ // 17 //",
  "SA17bsu059_u:50": "aṅgulasya caturthāṃsaḥ(śaḥ) karṇāvarttastu vistaraiḥ /",
  "SA17bsu059_u:51": "sārddhamātre 'ṅgule dve syāt karṇastvantarabhāgataḥ // 18 //",
  "SA17bsu059_u:52": "pārśvau syātāṃ yathāśobhaṃ keśāścāpi tathaiva ca /",
  "SA17bsu059_u:53": "arddhapañcamamātrañca karṇapatramapāṅgataḥ // 19 //",
  "SA17bsu059_u:54": "karṇātkarṇāntavijñeyo mastako 'ṣṭādaśāṅgulaḥ /",
  "SA17bsu059_u:55": "caturdaśāṅgulaṃ pṛṣṭhaṃ tayorantaramiṣyate // 20 //",
  "SA17bsu059_u:56": "catvāriṃśanmātrañca śiraḥ syātpariṇāhataḥ /",
  "SA17bsu059_u:57": "grīvocchedā(tsedhā)ccaturmātrā vistārādaṣṭamātṛkā // 21 //",
  "SA17bsu059_u:58": "pariṇāhācca kartavyā caturviśatimātṛkā /",
  "SA17bsu059_u:59": "grīvāntānyaṅgulānyaṣṭau skandhāṃso(śo) dvādaśāṅgulaḥ // 22 //",
  "SA17bsu059_u:60": "vināntarāṃśo vṛttaśca skandhaḥ syāllakṣaṇānvitaḥ /",
  "SA17bsu059_u:61": "catvāriṃśatamātrāṇi bāhau cāyāmamiṣyate // 23 //",
  "SA17bsu059_u:62": "bāhurviśatimātrastu prabāhuḥ ṣoḍaśastathā /",
  "SA17bsu059_u:63": "dvādaśāṅgulahastāgraṃ maṇibandhātprakīrtitaḥ // 24 //",
  "SA17bsu059_u:64": "kukuṇīmaṇibandhābhyāmaṅgulañcāṅgulaṃ smṛtam /",
  "SA17bsu059_u:65": "bāhau madhyaparikṣepa iṣṭo viṃśatimātṛkaḥ // 25 //",
  "SA17bsu059_u:66": "prabāhuḥ ṣoḍaśaḥśca syāddviṣaṭko maṇibandhane /",
  "SA17bsu059_u:67": "āyāmaṃ saptakaṃ pāṇau talavistārapañcakam // 26 //",
  "SA17bsu059_u:68": "[p._129]",
  "SA17bsu059_u:69": "śaṅkhañcakraṃ tale nyastaṃ padma cākuliśāṅkuśam /",
  "SA17bsu059_u:70": "sarvalakṣaṇarūpiṇyo le(re)khāḥ kāryyāḥ pṛthagvidhāḥ // 27 //",
  "SA17bsu059_u:71": "pañcāṅgulāyatā madhyā parvārddhonā pradeśinī /",
  "SA17bsu059_u:72": "aṅgulārddhavihīnā tu kartavyā syādanāmikā // 28 //",
  "SA17bsu059_u:73": "anāmikātaḥ parvonā kartavyā tu kanīyasī /",
  "SA17bsu059_u:74": "triparvāṅgulayaḥ sarvāḥ parvārddhena nakhāḥśubhāḥ // 29 //",
  "SA17bsu059_u:75": "maṇibandhopariṣṭāttu so 'ṅguṣṭhaścaturaṅgulaḥ /",
  "SA17bsu059_u:76": "tāvāneva parikṣepaḥ parvārddhena nakhaśca saḥ // 30 //",
  "SA17bsu059_u:77": "aṅguṣṭhāttu pradeśinyā antaraṃ tryaṅgulaṃ smṛtam /",
  "SA17bsu059_u:78": "kanīyasī maṇibandhādbhavetpañcāṅgulāyataḥ // 31 //",
  "SA17bsu059_u:79": "agrahastaparikṣepo vijñeyo dvādaśāṅgulaḥ /",
  "SA17bsu059_u:80": "dairghyāttṛtīyabhāgaḥ syāt svāṅgulīnāṃ parigrahaḥ // 32 //",
  "SA17bsu059_u:81": "grīvāhṛdayayormadhye sārddhadvādaśamātrikaḥ /",
  "SA17bsu059_u:82": "hṛnnābhyośca catuścaiva stanayorapi cāntaram // 33 //",
  "SA17bsu059_u:83": "stanayorupariṣṭācca kakṣe kārye ṣaḍaṅgule /",
  "SA17bsu059_u:84": "tadūrdhvaṃ punarāskandhānnavamātrā prakīrtitā // 34 //",
  "SA17bsu059_u:85": "uraso 'pi ca vistāraḥ pañcaviṃśatimātrikaḥ /",
  "SA17bsu059_u:86": "pariṇāhāduraḥ kāryo vistārāttriguṇaṃ śubham // 35 //",
  "SA17bsu059_u:87": "stananābhyantare(raṃ) caiva ṣoḍaśāṅgulamiṣyate /",
  "SA17bsu059_u:88": "avedhaḥ sandhirandhrābhyāṃ nābhimaṇḍalamaṅgulam // 36 //",
  "SA17bsu059_u:89": "nābhimadhyāt parikṣepaḥ ṣaṭcatvāriṃśadaṅgulaḥ /",
  "SA17bsu059_u:90": "aṣṭādaśāṅgulaṃ caiva vistāreṇa kaṭirbhavet // 37 //",
  "SA17bsu059_u:91": "[p._130]",
  "SA17bsu059_u:92": "nābhimeḍhrontarañca syāt sārddhadvādaśamātrikaḥ /",
  "SA17bsu059_u:93": "tadarddhena tu meḍhraḥ syādapānapariṇāhataḥ // 38 //",
  "SA17bsu059_u:94": "pañcamātrāyatau lambau vṛṣaṇau caturaṅgulau /",
  "SA17bsu059_u:95": "pañcamātrāṇi catvāri vistārāyāmatastayoḥ // 39 //",
  "SA17bsu059_u:96": "ūrū samāhitau kāryau pañcaviṃśatimātrikau /",
  "SA17bsu059_u:97": "suvistāraṃ tayormadhyaṃ māpayeddvādaśāṅgulam // 40 //",
  "SA17bsu059_u:98": "pariṇāhe 'pi kartavyaṃ śubhaṃ ṣaṭtriṃśadaṅgulam /",
  "SA17bsu059_u:99": "madhye................caturaṅgulaṃ tu jānutaḥ // 41 //",
  "SA17bsu059_u:100": "sandhibandhaścaturmātrā tridvikaṃ jānugulphakam /",
  "SA17bsu059_u:101": "guḍhagulphaṃ sirāsthitvaṃ sukumārau stayau(?) śubhau // 42 //",
  "SA17bsu059_u:102": "ṛjuvṛttāyate jaṃghā(ghe) pañcaviṃśatimātrike /",
  "SA17bsu059_u:103": "tayormadhye pariṇāha ekaviṃśatimātrikaḥ // 43 //",
  "SA17bsu059_u:104": "caturdaśāṅgulā 'yatā gulphāntāścaturaṅgulam /",
  "SA17bsu059_u:105": "gulpho dvādaśakāyāmaḥ pādaḥ pādārddhavistaraḥ // 44 //",
  "SA17bsu059_u:106": "pārśvau dvayaṅgulavistārau pārṣṇī ca caturaṅgule /",
  "SA17bsu059_u:107": "ṣaḍaṅgulaṃ tva(su)vistāraṃ triguṇaṃ pariṇāhataḥ // 45 //",
  "SA17bsu059_u:108": "pañcāṅgulyo dviparvāṇi parvārddhena nakhāḥ smṛtāḥ /",
  "SA17bsu059_u:109": "pañcāṅgulaṃ parikṣepādaṅguṣṭhastryaṅgulāyataḥ // 46 //",
  "SA17bsu059_u:110": "aṅguṣṭhakasamā caiva āyāmena pradeśinī /",
  "SA17bsu059_u:111": "ṣoḍaśāṣṭāṣṭabhāgena śeṣā hīnāḥ parasparam // 47 //",
  "SA17bsu059_u:112": "aṅgulyo mātrikocchre(tse)dhādaṅguṣṭhaḥ sārddhamātrikaḥ /",
  "SA17bsu059_u:113": "tatra tāmranakhāḥ sārddhāṃ aṅgulāḥ komalāyatāḥ // 48 //",
  "SA17bsu059_u:114": "[p._131]",
  "SA17bsu059_u:115": "kūrmapṛṣṭhasamau pūrṇau pādau bahiralaṃkṛtau /",
  "SA17bsu059_u:116": "samaśliṣṭānatācchidrau supratiṣṭhataḥ(ṣṭhita) lakṣaṇaiḥ // 49 //",
  "SA17bsu059_u:117": "tayostalaṃ sucakrādicitrākāraṃ tu kārayet /",
  "SA17bsu059_u:118": "pādāvatra praśaṃsanti sarvajñā hatakilviṣāḥ // 50 //",
  "SA17bsu059_u:119": "kukkuṭāṇḍaṃ tilākāraṃ caturasraṃ suvartulam /",
  "SA17bsu059_u:120": "sarvasāmānyaliṅgānāṃ mukhametaccaturvidham // 51 //",
  "SA17bsu059_u:121": "mahānarasurastrīṇāṃ kukkuṭāṇḍaṃ tilākṛtiḥ /",
  "SA17bsu059_u:122": "lāvaṇyaṃ darśanīyaṃ tat kārayet mukhadvayam // 52 //",
  "SA17bsu059_u:123": "pretabhūtapiśācānāṃ rakṣasāṃ vikṛtākṛtiḥ /",
  "SA17bsu059_u:124": "maṇḍalaṃ caturasraṃ ca kārayettu mukhadvayam // 53 //",
  "SA17bsu059_u:125": "samā dṛṣṭiḥ prasannā ca buddhānāmavalokane /",
  "SA17bsu059_u:126": "nādho nordhvaṃ na dainyena saṃyuktaṃ sarvadarśinām // 54 //",
  "SA17bsu059_u:127": "// iti samyaksambuddhabhāṣitaṃ pratimālakṣaṇaṃ samāptam //"
}