{
    "SA17bsa044_u:0_0": "Kriyāsaṃgrahakārikā",
    "SA17bsa044_u:1_0": "parīkṣā guruśiṣyāṇāṃ guroradhyeṣaṇā tataḥ /",
    "SA17bsa044_u:1_1": "mantrasevāṃ guruḥ kuryāt tato bhūmeḥ parīkṣaṇam // 1 //",
    "SA17bsa044_u:2_0": "devatāyogayuktaḥ san mahīpūjāṃ vidhāya ca /",
    "SA17bsa044_u:2_1": "devatotthāpanaṃ kṛtvā śodhayenmedinīṃ tataḥ // 2 //",
    "SA17bsa044_u:3_0": "yavānāṃ ropaṇaṃ kṛtvā jāṅgulī cāpi pūjayet /",
    "SA17bsa044_u:3_1": "sūtraṃ saṃpātya yatnena vāstunāgaṃ parīkṣayet // 3 //",
    "SA17bsa044_u:4_0": "iṣṭakālakṣaṇaṃ samyag jñātvādigrahaṇaṃ tataḥ /",
    "SA17bsa044_u:4_1": "samyagāyavyayau jñātvā prāsādasya ca lakṣaṇam // 4 //",
    "SA17bsa044_u:5_0": "devadikpālavasudhāḥ sampūjya ca yathāvidhi /",
    "SA17bsa044_u:5_1": "ītikāropaṇaṃ kṛtvā homaṃ kuryāt pramohanam // 5 //",
    "SA17bsa044_u:6_0": "vanayātrā tato dvāraṃ samyagutthāpayetsudhīḥ /",
    "SA17bsa044_u:6_1": "saṃsthāpya ca śirodāru juhuyādamṛtānalam // 6 //",
    "SA17bsa044_u:7_0": "vajrācāryapraveśo 'smin samādhitrayabhāvanā /",
    "SA17bsa044_u:7_1": "parikramārthasūtrāṇāṃ pātanaṃ rajasāmapi // 7 //",
    "SA17bsa044_u:7_2": "agnikriyāvidhānaṃ ca piṇḍikāsthāpanaṃ tataḥ /",
    "SA17bsa044_u:7_3": "savyakṣaṇena niṣpādya pratimāṃ sthāpayettataḥ // 8 //",
    "SA17bsa044_u:8_0": "citrakarma valiḥ piṇḍī gaṇḍikālakṣaṇaṃ tataḥ /",
    "SA17bsa044_u:8_1": "eteṣāṃ ca pratiṣṭhānaṃ pravrajyāgrahaṇaṃ tathā // 9 //",
    "SA17bsa044_u:9_0": "lakṣaṇaṃ dharmadhātūnāṃ dhvajānāmavaropaṇam /",
    "SA17bsa044_u:9_1": "jīrṇoddhāropasaṃhārau pūjayed gaṇamaṇḍalam // 10 //",
    "SA17bsa044_u:10_0": "/ kriyāsaṃgrahakārikā samāptā //",
    "SA17bsa044_u:11_0": "/ kṛtiriyaṃ nāgārjunapādānām //"
}