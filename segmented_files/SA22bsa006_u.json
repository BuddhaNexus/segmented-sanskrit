{
  "SA22bsa006_u:0": "Cittaviśuddhiprakaraṇa (Cvp)",
  "SA22bsa006_u:1": "Cvp_1 [anādinidhanaṃ śāntaṃ bhāvābhāvavivarjitam /",
  "SA22bsa006_u:2": "nirvikalpaṃ nirālambamanavasthitamadvayam //",
  "SA22bsa006_u:3": "Cvp_2 adṛṣṭāntamanākhyānamacintyamanidarśanam /",
  "SA22bsa006_u:4": "anāśrayāpratiṣṭhānaṃ nirvikāramasaṃskṛtam //",
  "SA22bsa006_u:5": "Cvp_3 sarveṣāmāśrayaṃ buddhaṃ karuṇāmayavigraham /",
  "SA22bsa006_u:6": "nānādhimuktasattvānāṃ nānopāyapradarśakam //",
  "SA22bsa006_u:7": "Cvp_4 mahārāgaṃ namaskṛtya padmanarteśvaraṃ prabhum /",
  "SA22bsa006_u:8": "iha stokaṃ pravakṣyāmi svacittapratyavekṣaṇāt //",
  "SA22bsa006_u:9": "Cvp_5 yogācārasya nayataḥ sarvameva suniścitam /",
  "SA22bsa006_u:10": "tatsarvamiha vaktavyaṃ tasmādevatsamācaret] //",
  "SA22bsa006_u:11": "Cvp_6 yena yena hi bandhyante jantavo raudrakarmaṇā /",
  "SA22bsa006_u:12": "sopāyena tu tenaiva mucyante bhavabandhanāt //",
  "SA22bsa006_u:13": "Cvp_7 [viśuddhereva sattvasya viśuddhaṃ jāyate phalam] /",
  "SA22bsa006_u:14": "mahāyāne suvispaṣṭamuktametatsuvistaram //",
  "SA22bsa006_u:15": "Cvp_8 dharmapudgalanairātmyaṃ cittamātraṃ jagau muniḥ /",
  "SA22bsa006_u:16": "tato 'pi sarvamutpannamāgamātyanukūlakam //",
  "SA22bsa006_u:17": "Cvp_9 bhāvagrāhagrahāveśagṛhītānpraticoditaḥ /",
  "SA22bsa006_u:18": "āgame 'pi hi suvyakto vistaraḥ karuṇātmanā //",
  "SA22bsa006_u:19": "Cvp_10 manaḥpūrvaṅgamā dharmā manaḥśreṣṭhā manojavāḥ /",
  "SA22bsa006_u:20": "manasā hi prasannena bhāṣate vā karoti vā //",
  "SA22bsa006_u:21": "Cvp_11 svapitā bhikṣuṇā vṛddhaḥ śīghraṃ gaccheti preritaḥ /",
  "SA22bsa006_u:22": "patanācca mṛte tasminnānantaryeṇa yujyate //",
  "SA22bsa006_u:23": "Cvp_12 sumlānenārhatādioṣṭo maṅgalaṃ paripīḍaya /",
  "SA22bsa006_u:24": "upasthāyakabhikṣuḥ sa mṛte tasminna doṣabhāk //",
  "SA22bsa006_u:25": "Cvp_13 andhasaṃjñayā nāndhāṃstu mārayandoṣamaśrute /",
  "SA22bsa006_u:26": "ityuktaṃ vinaye vyaktaṃ na doṣo 'duṣṭacetasām //",
  "SA22bsa006_u:27": "Cvp_14 na stūpakhanane doṣastatsaṃskāradhiyā yataḥ /",
  "SA22bsa006_u:28": "kevalaṃ puṇyarāśiḥ syādupānantaryakāraṇāt //",
  "SA22bsa006_u:29": "Cvp_15 upānadyugalaṃ dattvā munermūrdhni śubhāśayāt /",
  "SA22bsa006_u:30": "apanīya tathā cāndho rājyaṃ phalamavāpnutaḥ //",
  "SA22bsa006_u:31": "Cvp_16 tasmādāśayamūlā hi pāpapuṇyavyavasthitiḥ /",
  "SA22bsa006_u:32": "ityuktamāgame yasmānnāpattiḥ śubhacetasām //",
  "SA22bsa006_u:33": "Cvp_17 svādhidaivatayogātmā jagadarthakvatodyamaḥ /",
  "SA22bsa006_u:34": "bhuñjāno viṣayān yogī mucyate na ca lipyate //",
  "SA22bsa006_u:35": "Cvp_18 yathaiva viṣatattvajño viṣamālokya bhakṣayan /",
  "SA22bsa006_u:36": "kevalaṃ muhyate nāsau rogamuktaśca jāyate //",
  "SA22bsa006_u:37": "Cvp_19 māyāmarīcigandharvanagarasvaprasannibham /",
  "SA22bsa006_u:38": "jagatsarvaṃ samālokya kiṃ kathaṃ kena bhujyate //",
  "SA22bsa006_u:39": "Cvp_20 bālā rajyanti rūpeṣu vairāgyaṃ yānti madhyamāḥ /",
  "SA22bsa006_u:40": "svabhāvajñā vimucyante rūpasyottamabuddhayaḥ //",
  "SA22bsa006_u:41": "Cvp_21 vicintya samayaṃ sarvaṃ devatāpūjanāvidhim /",
  "SA22bsa006_u:42": "śuddhamālokya niḥśaṅkaṃ bhoktavyaṃ mantracoditam //",
  "SA22bsa006_u:43": "Cvp_22 śodhyaṃ bodhyaṃ tathā dīpyamakṣaratrayayogataḥ /",
  "SA22bsa006_u:44": "aṅguṣṭhānāmikāgrābhyāṃ prīṇayecca tathāgatān //",
  "SA22bsa006_u:45": "Cvp_23 yatsatyamiti bālānāṃ tanmithyā khalu yoginām /",
  "SA22bsa006_u:46": "gacchannantamanenaiva na baddho na ca mucyate //",
  "SA22bsa006_u:47": "Cvp_24 saṃsāraṃ caiva nirvāṇaṃ manyante 'tattvadarśinaḥ /",
  "SA22bsa006_u:48": "na saṃsāraṃ na nirvāṇaṃ manyante 'tattvadarśinaḥ //",
  "SA22bsa006_u:49": "Cvp_25 vikalpo hi mahāgrāhaḥ saṃsārodadhipātakaḥ /",
  "SA22bsa006_u:50": "avikalpā mahātmāno mucyante bhavabandhanāt //",
  "SA22bsa006_u:51": "Cvp_26 śaṅkāviṣeṇa bādhyante viṣeṇeva pṛthagjanāḥ /",
  "SA22bsa006_u:52": "tāmevotkhātya nirmūlaṃ vicaretkaruṇātmakaḥ //",
  "SA22bsa006_u:53": "Cvp_27 yathaiva sphaṭikaḥ svacchaḥ pararāgeṇa rajyate /",
  "SA22bsa006_u:54": "tathaiva cittaratnaṃ tu kalpanārāgarañjitam //",
  "SA22bsa006_u:55": "Cvp_28 prakṛtyā kalpanārāgairviviktaṃ cittaratnakam /",
  "SA22bsa006_u:56": "ādiśuddhamanutpannaṃ niḥsvabhāvamanāvilam //",
  "SA22bsa006_u:57": "Cvp_29 tattadyatnena kartavyaṃ yadyadbālairvigarhitam /",
  "SA22bsa006_u:58": "svādhidaivatayogena cittanirmalakāraṇāt //",
  "SA22bsa006_u:59": "Cvp_30 rāgāgniviṣasaṃmugdhā yogināṃ śubhacetasā /",
  "SA22bsa006_u:60": "kāmitāḥ khalu kāminyaḥ kāmamokṣaphalāvahāḥ //",
  "SA22bsa006_u:61": "Cvp_31 yathā svagarūḍaṃ dhyātvā viṣamākṛṣya saṃpiban /",
  "SA22bsa006_u:62": "karoti nirviṣaṃ sādhyaṃ na viṣeṇābhibhūyate //",
  "SA22bsa006_u:63": "Cvp_32 dvādaśayojanavyāsaṃ cakraṃ vai śirasi bhramat /",
  "SA22bsa006_u:64": "bodhicittaṃ samutpādya apanītamiti śrutiḥ //",
  "SA22bsa006_u:65": "Cvp_33 bodhicittaṃ samutpādya sambodhau kṛtacetasā /",
  "SA22bsa006_u:66": "tatrāsti yanna kartavyaṃ jagadudvaraṇāśayā //",
  "SA22bsa006_u:67": "Cvp_34 ādiśuddhamanutpannaṃ niḥsvabhāvamanāvilam /",
  "SA22bsa006_u:68": "jagadbhāvena sampaśyanna baddho na ca mucyate //",
  "SA22bsa006_u:69": "Cvp_35 vicintya vidhivadyogī devatāguṇavistaram /",
  "SA22bsa006_u:70": "rajyate rāgacittena rāgabhogeṇa mucyate //",
  "SA22bsa006_u:71": "Cvp_36 kiṃ kurmaḥ kutra vai labhyā vicitrā bhāvaśaktayaḥ /",
  "SA22bsa006_u:72": "viṣākrānto yathā kaścidviṣeṇaiva tu nirviṣaḥ //",
  "SA22bsa006_u:73": "Cvp_37 karṇājjalaṃ jalenaiva kaṇṭakenaiva kaṇṭakam /",
  "SA22bsa006_u:74": "rāgeṇaiva tathārāgamudvaranti maṇīṣiṇaḥ //",
  "SA22bsa006_u:75": "Cvp_38 yathaiva rajako vastraṃ malenaiva tu nirmalam /",
  "SA22bsa006_u:76": "kuryādvijñastathātmānaṃ malenaiva tu nirmalam //",
  "SA22bsa006_u:77": "Cvp_39 yathā bhavati saṃśuddho rajonirghṛṣṭadarpaṇaḥ /",
  "SA22bsa006_u:78": "sevitastu tathā vijñairdoṣo doṣavināśanaḥ //",
  "SA22bsa006_u:79": "Cvp_40 lohapiṇḍo jale kṣipto majjatyeva tu kevalam /",
  "SA22bsa006_u:80": "pātrīkṛto sa evāndhaṃ tārayettarati svayam //",
  "SA22bsa006_u:81": "Cvp_41 tavdatpātrīkṛtaṃ cittaṃ prajñopāyavidhānataḥ /",
  "SA22bsa006_u:82": "bhuñjāno mucyate kāmo mocayatyaparānapi //",
  "SA22bsa006_u:83": "Cvp_42 durvijñaiḥ sevitaḥ kāmaḥ kāmo bhavati bandhanam /",
  "SA22bsa006_u:84": "sa eva sevito vijñaiḥ kāmo mokṣaprasādhakaḥ //",
  "SA22bsa006_u:85": "Cvp_43 prasiddhaṃ sakale loke kṣīraṃ viṣavināśanam /",
  "SA22bsa006_u:86": "tadeva phaṇibhiḥ pītaṃ sutarāṃ viṣavardhanam //",
  "SA22bsa006_u:87": "Cvp_44 jale kṣīraṃ yathāviṣṭaṃ haṃso pibati paṇḍitaḥ /",
  "SA22bsa006_u:88": "saviṣān viṣāyāṃstadvad bhuktvā muktaśca paṇḍitaḥ //",
  "SA22bsa006_u:89": "Cvp_45 yathaiva vidhivadbhuktaṃ viṣamapyamṛtāyate /",
  "SA22bsa006_u:90": "durbhuktaṃ ghṛtapūrādi bālānāntu viṣāyate //",
  "SA22bsa006_u:91": "Cvp_46 idameva hi yaccittaṃ śodhitaṃ hetubhiḥ śubhaiḥ /",
  "SA22bsa006_u:92": "nirvikalpaṃ nirālambaṃ bhāti prakṛtinirmalam //",
  "SA22bsa006_u:93": "Cvp_47 yathā vahniḥ kṛśopyeṣa tailavartyādisaṃskṛtaḥ /",
  "SA22bsa006_u:94": "dīpo nirmalaniṣkampaḥ sthirastimiranāśanaḥ //",
  "SA22bsa006_u:95": "Cvp_48 vaṭabījaṃ yathā sūkṣmaṃ sahakārasamanvitam /",
  "SA22bsa006_u:96": "śākhāmūlaphalopetaṃ mahāvṛkṣavidhāyakam //",
  "SA22bsa006_u:97": "Cvp_49 haridrācūrṇasaṃyogādvarṇāntaramiti smṛtam /",
  "SA22bsa006_u:98": "prajñopāyasamāyogāddharmadhātuṃ tathā viduḥ //",
  "SA22bsa006_u:99": "Cvp_50 ghṛtaṃ ca madhusaṃyuktaṃ samāṃśaṃ viṣatāṃ vrajet /",
  "SA22bsa006_u:100": "tadeva vidhivadbhuiktamutkṛṣṭaṃ tu rasāyanam //",
  "SA22bsa006_u:101": "Cvp_51 rasaghṛṣṭaṃ yathā tāmraṃ nirdoṣaṃ kāñcanaṃ bhavet /",
  "SA22bsa006_u:102": "jñānaśuddhyā tathā kleśāḥ samyak kalyāṇakārakāḥ //",
  "SA22bsa006_u:103": "Cvp_52 hīnayānābhirūḍhānāṃ mṛtyuśaṅkā pade pade /",
  "SA22bsa006_u:104": "saṃgrāmajayacittastu dūra eva vyavasthitaḥ //",
  "SA22bsa006_u:105": "Cvp_53 mahāyānābhirūḍhastu karuṇādharmavarmitaḥ /",
  "SA22bsa006_u:106": "prajñātantudhanurbāṇo jagaduḍvaraṇāśayaḥ //",
  "SA22bsa006_u:107": "Cvp_54 mahāsattvo mahopāyaḥ sthirabudviratandritaḥ /",
  "SA22bsa006_u:108": "jitvā dustarasaṅgrāmaṃ tārayedaparānapi //",
  "SA22bsa006_u:109": "Cvp_55 paśavo 'pi hi kliśyante svārthamātraparāyaṇāḥ /",
  "SA22bsa006_u:110": "jagadarthavidhātāro dhanyāste viralā janāḥ //",
  "SA22bsa006_u:111": "Cvp_56 śītavātādiduḥkhāni sahante svārthalampaṭāḥ /",
  "SA22bsa006_u:112": "jagadarthapravṛttāste na sahante kathaṃ nu te //",
  "SA22bsa006_u:113": "Cvp_57 nārakāṇyapi duḥkhāni soḍhavyāni kṛpālubhiḥ /",
  "SA22bsa006_u:114": "śītavātādiduḥkhāni kastānyapi vicārayet //",
  "SA22bsa006_u:115": "Cvp_58 na kaṣṭakalpanāṃ kuryānnopavāsena ca kriyām /",
  "SA22bsa006_u:116": "snānaṃ śaucaṃ na caivātra grāmadharmaṃ vivarjayet //",
  "SA22bsa006_u:117": "Cvp_59 nakhadantāsthimajjānaḥ pituḥ śukravikārajāḥ /",
  "SA22bsa006_u:118": "māṃsaśoṇitakeśādi mātṛśoṇitasambhavam //",
  "SA22bsa006_u:119": "Cvp_60 itthamaśucisambhūtaḥ piṇḍo yo 'śucipūritaḥ /",
  "SA22bsa006_u:120": "kathaṃ saṃstādṛśaḥ kāyo gaṅgāsnānena śudhyati //",
  "SA22bsa006_u:121": "Cvp_61 na hyaśucirghaṭastoyaiḥ kṣālito 'pi punaḥ punaḥ /",
  "SA22bsa006_u:122": "tadvadaśucisampūrṇaḥ piṇḍo 'pi na viśudhyati //",
  "SA22bsa006_u:123": "Cvp_62 pratarannapi gaṅgāyāṃ naiva śvā śuddhimarhati /",
  "SA22bsa006_u:124": "taddadvarmadhiyāṃ puṃsāṃ tīrthasnānaṃ tu niṣphalam //",
  "SA22bsa006_u:125": "Cvp_63 dharmo yadi bhavetsnānātkaivartānāṃ kṛtārthatā /",
  "SA22bsa006_u:126": "naktandivaṃ jalasthānāṃ matsyādīnāṃ tu kā kathā //",
  "SA22bsa006_u:127": "Cvp_64 pāpakṣayo 'pi snānena naiva syāditi niścayaḥ /",
  "SA22bsa006_u:128": "yato rāgādivṛddhistu dṛśyate tīrthasevinām //",
  "SA22bsa006_u:129": "Cvp_65 rāgo dveṣaśca mohaśca īrṣyā tṛṣṇā ca sarvadā /",
  "SA22bsa006_u:130": "pāpānāṃ mūlamākhyātaṃ naiṣāṃ snānena śodhanam //",
  "SA22bsa006_u:131": "Cvp_66 ātmātmīyagrahādete sambhavantīha janminaḥ /",
  "SA22bsa006_u:132": "avidyāhetukaḥ so 'pi sāvidyā bhrāntiriṣyate //",
  "SA22bsa006_u:133": "Cvp_67 raupyabuddhiryathā śuktau śuktidṛṣṭau nivartate /",
  "SA22bsa006_u:134": "nairātmyadarśanātsāpi nirmūlamavasīdati //",
  "SA22bsa006_u:135": "Cvp_68 sarpabuddhiryathā rajjau rajjudṛṣṭau nivartate /",
  "SA22bsa006_u:136": "sarpabuddhiḥ punastatra naiva syādiha janmani //",
  "SA22bsa006_u:137": "Cvp_69 sattvabuddhistathātrāpi vajrajñānānnivartate /",
  "SA22bsa006_u:138": "na bhāvaḥ sambhavettatra dagdhabīja ivāṅkuraḥ //",
  "SA22bsa006_u:139": "Cvp_70 nairātmyaśucisaṅgātaḥ piṇḍaḥ prakṛtinirmalaḥ /",
  "SA22bsa006_u:140": "tasya santāpane dharmaḥ kaṣṭaṃ bālairvikalpitaḥ //",
  "SA22bsa006_u:141": "Cvp_71 candrodayavyayañjāpi apekṣya tithikalpanā /",
  "SA22bsa006_u:142": "sūryodayavyayenāpi divārātrivyavasthitiḥ //",
  "SA22bsa006_u:143": "Cvp_72 pūrvādivyavahāro 'pi kalpanāpekṣayā kṛtaḥ /",
  "SA22bsa006_u:144": "grahanakṣatrarāśyādi sarvalokairvikalpitam //",
  "SA22bsa006_u:145": "Cvp_73 śītoṣṇavarṣaṇāpekṣā tathaiva ṛtukalpanā /",
  "SA22bsa006_u:146": "svakarmaphalabhogo 'yaṃ śubhāśubhagrahoditaḥ //",
  "SA22bsa006_u:147": "Cvp_74 avidyākardamāliptaṃ cittacintāmaṇiṃ pumān /",
  "SA22bsa006_u:148": "pravṛttaḥ kṣālituṃ vidvān ko 'vidyāṃ vṛṃhayetpunaḥ //",
  "SA22bsa006_u:149": "Cvp_75 na grahatithinakṣatradeśakālādyapekṣaṇam /",
  "SA22bsa006_u:150": "viharennirvikalpastu nirnimittamaśaṅkitaḥ //",
  "SA22bsa006_u:151": "Cvp_76 yadyadindriyamārgatvaṃ yāyāttattatsvabhāvataḥ /",
  "SA22bsa006_u:152": "susamāhitayogena sarvaṃ buddhamayaṃ vadet //",
  "SA22bsa006_u:153": "Cvp_77 cakṣurvairocano buddhaḥ śravaṇaṃ vajrasūryakaḥ /",
  "SA22bsa006_u:154": "ghrāṇaṃ ca paramāśvastu padmanarteśvaro mukham //",
  "SA22bsa006_u:155": "Cvp_78 kāyaḥ śrīheruko rājā vajrasattvaśca mānasam /",
  "SA22bsa006_u:156": "evaṃ samyak sadā yogī vicaretkaruṇātmakaḥ //",
  "SA22bsa006_u:157": "Cvp_79 siddhāntī nirvikalpo 'sau sthirakalpastu dhīdhanaḥ /",
  "SA22bsa006_u:158": "yatheṣṭaceṣṭāvyāpāraḥ sarvabhuk sarvakṛttathā //",
  "SA22bsa006_u:159": "Cvp_80 sarvakāmakriyākārī yathārucitaceṣṭitaḥ /",
  "SA22bsa006_u:160": "utthito vā niṣaṇo vā caṅkramanvā svapaṃstathā //",
  "SA22bsa006_u:161": "Cvp_81 amaṇḍalapraviṣṭo vā sarvāvaraṇavānapi /",
  "SA22bsa006_u:162": "svādhidaivatayogātmā mandapuṇyo 'pi sidhyati //",
  "SA22bsa006_u:163": "Cvp_82 anena sarvasauritvaṃ sarvabuddhatvameva vā /",
  "SA22bsa006_u:164": "janmanīhaiva tattvajñaḥ samprāpnoti na saṃśayaḥ //",
  "SA22bsa006_u:165": "Cvp_83 yathā prākṛtalokena yogiloko na bādhyate /",
  "SA22bsa006_u:166": "bādhyante dhīviśeṣeṇa yogino 'pyuttarottaraiḥ //",
  "SA22bsa006_u:167": "Cvp_84 mahāprajñāmahopāyamahākṛpādhimokṣataḥ /",
  "SA22bsa006_u:168": "mahāyānasamuddiṣṭaṃ mahāsattvasya gocaram //",
  "SA22bsa006_u:169": "Cvp_85 yatkalpānāmasaṃkhyeyairna prāptaṃ bahubhirmatam /",
  "SA22bsa006_u:170": "janmanyatraiva buddhatvaṃ prāpyate nātra saṃśayaḥ //",
  "SA22bsa006_u:171": "Cvp_86 mahāyānasya māhātmyaṃ puṇyajñānena sambhṛtam /",
  "SA22bsa006_u:172": "sarvajñatvaṃ padaṃ ramyaṃ sadyo janmani labhyate //",
  "SA22bsa006_u:173": "Cvp_87 āgamaśruticintā tu mahāyāne na gṛhyate /",
  "SA22bsa006_u:174": "āśayānuśayābhedād yānābhedaḥ prakāśyate //",
  "SA22bsa006_u:175": "Cvp_88 anya evādhimokṣo 'yaṃ tathānyā bodhicārikā /",
  "SA22bsa006_u:176": "anyā cittaviśuddhiśca phalamandhadihocyate //",
  "SA22bsa006_u:177": "Cvp_89 samīpe nirmalādarśe rūpaṃ nirmalacakṣuṣaḥ /",
  "SA22bsa006_u:178": "yathā bhāti suvispaṣṭaṃ svacchaprakṛtinirmalam //",
  "SA22bsa006_u:179": "Cvp_90 vidhūtakalpanājālaviṣpraṣṭaśuddhacetasāṃ /",
  "SA22bsa006_u:180": "yogināñca tathā jñānaṃ prajñānirmaladarpaṇaiḥ //",
  "SA22bsa006_u:181": "Cvp_91 sūryakāntisamāśliṣṭasūryakāntamaṇau yathā /",
  "SA22bsa006_u:182": "sahasā prajvalatyagniḥ samathaḥ svārthasādhane //",
  "SA22bsa006_u:183": "Cvp_92 apāstakalpanājālaṃ sūryakāntanibhaṃ manaḥ /",
  "SA22bsa006_u:184": "prajñāsūryāṃ śusaṃśliṣṭaṃ tadvajjvalati yoginām //",
  "SA22bsa006_u:185": "Cvp_93 kāṣṭhadvayanigharṣeṇa yathā jvalati pāvakaḥ /",
  "SA22bsa006_u:186": "ādimadhyāntasaṃśuddhaḥ sarvavastuprakāśakaḥ /",
  "SA22bsa006_u:187": "prajñopāyasamāyogādyogijñānaṃ tathā viduḥ //",
  "SA22bsa006_u:188": "Cvp_94 yathaivaikaḥ pradīpo 'yaṃ varttyantarasamāśritaḥ /",
  "SA22bsa006_u:189": "yathāsvārthaṃ yathāsthānaṃ karotyuccaiḥ prakāśanam //",
  "SA22bsa006_u:190": "Cvp_95 sphuraṇānantamūrtistu prajñopāyavibhāvanaiḥ /",
  "SA22bsa006_u:191": "nānādhimuktasattvānāṃ yathākṛtyamanuṣṭhayet //",
  "SA22bsa006_u:192": "Cvp_96 vidhi jñohi yathā kaścitkṣīrādamṛtamuddharet /",
  "SA22bsa006_u:193": "nirdoṣaṃ śītalaṃ hṛdyaṃ sarvavyādhivināśanam //",
  "SA22bsa006_u:194": "Cvp_97 prajñākṣīramahopāyādvidhivanmathanotthitaḥ /",
  "SA22bsa006_u:195": "viśuddhadharmadhātuḥ sa sukhāsukhavināśanaḥ //",
  "SA22bsa006_u:196": "Cvp_98 yathā latā samudbhūtā phalapuṣpasamanvitā /",
  "SA22bsa006_u:197": "tathaikakṣaṇasambodhiḥ sambhāradvayasaṃyutā //",
  "SA22bsa006_u:198": "Cvp_99 [vaśadveṣagatistambha] varṣaṇākarṣaṇādikam /",
  "SA22bsa006_u:199": "madyamāṃsarato yogī kurvannāpyupalipyate //",
  "SA22bsa006_u:200": "Cvp_100 [hastakaṅkaṇabimbāya ki]mādarśaḥ samīkṣyate /",
  "SA22bsa006_u:201": "mahāyāne yato 'dyāpi mantrasāmarthyadarśanam //",
  "SA22bsa006_u:202": "Cvp_101 mātṛduhitṛsambandha[stattvato 'tra na kalpyate /",
  "SA22bsa006_u:203": "bhagnāyodhūpavarttīva] jagadāha tathāgataḥ //",
  "SA22bsa006_u:204": "Cvp_102 pañcabhūtātmakaṃ śukraṃ śoṇitañcāpi tādṛśam /",
  "SA22bsa006_u:205": "tanmayaḥ khalu piṇḍo 'yaṃ ko vipraḥ kaśca vāntyajaḥ //",
  "SA22bsa006_u:206": "Cvp_103 [pañcaskandhātmakaṃ sarvaṃ]śarīraṃ khalu bhikṣavaḥ /",
  "SA22bsa006_u:207": "anityaṃ duḥkhaśūnyañca na jātirna ca jātimān //",
  "SA22bsa006_u:208": "Cvp_104 kaivarttīgarbhambhūtaḥ kaściñcā[ṇḍālajātimān /",
  "SA22bsa006_u:209": "tapasā brāhmaṇo jātastasmājjātirakāraṇam //",
  "SA22bsa006_u:210": "Cvp_105 svasāraṃ mātaraṃ śvaśrūṃ svaputrīṃ bhāgineyikām /",
  "SA22bsa006_u:211": "brāhmaṇīṃ kṣatriyāṃ vaiśyāṃ vidhijñānena śūdrikām] //",
  "SA22bsa006_u:212": "Cvp_106 ekāṅgavikalāṃ hīnāṃ garhītāmantyajāmapi /",
  "SA22bsa006_u:213": "yoṣitaṃ pūjayennityaṃ jñānavajraprabhāvanaiḥ //",
  "SA22bsa006_u:214": "Cvp_107 [sarvadā smitavakreṇa mantravistṛtacakṣuṣā /",
  "SA22bsa006_u:215": "sambodhau cittamutpādyasvādhidaivatabhāvataḥ //",
  "SA22bsa006_u:216": "Cvp_108 paśyeddṛśyaṃ kṣaṇaṃkiñcicchotavyaṃ śṛṇuyāttathā /",
  "SA22bsa006_u:217": "satyāsatyaviyuktaṃ tuvadedvākyamatandritaḥ] //",
  "SA22bsa006_u:218": "Cvp_109 snānābhyañjanavastrādikhānapānādiyantataḥ /",
  "SA22bsa006_u:219": "svādhidaivatayogenacintayetpūjanāvidhim //",
  "SA22bsa006_u:220": "Cvp_110 [gītaṃvādyaṃ tathā nṛtyaṃ sopāyena vratī bhajet /",
  "SA22bsa006_u:221": "akurvanniha bhāveṣusarveṣvabhiniveśanam //",
  "SA22bsa006_u:222": "Cvp_111 svātmabhāvaprahāṇenatāpayenna tapasyayā] /",
  "SA22bsa006_u:223": "sukhādyathā sukhaṃdhyāyetsambuddho 'yamanāgataḥ //",
  "SA22bsa006_u:224": "Cvp_112 sarvakāmopabhogaistu ramathamuktito 'bhayāt /",
  "SA22bsa006_u:225": "mā bhaiṣṭa nāsti vaḥ pāpaṃsamayo duratikramaḥ //",
  "SA22bsa006_u:226": "Cvp_113 mantrasaṃskṛtakāṣṭhādidevatvamadhigacchati /",
  "SA22bsa006_u:227": "kiṃ punaḥ jñānavān kāyaḥkaṣṭaṃ mohaviceṣṭitam //",
  "SA22bsa006_u:228": "Cvp_114 prākṛtatvamahaṅkāraṃparityajya samāhitaḥ /",
  "SA22bsa006_u:229": "prajñopāyavidhānenakriyāmimāṃ samācaret //",
  "SA22bsa006_u:230": "Cvp_115 paṅkajātaṃ yathā padmaṃpaṅkadoṣairna lipyate /",
  "SA22bsa006_u:231": "vikalpavāsanādoṣaistathāyogī na lipyate //",
  "SA22bsa006_u:232": "Cvp_116 [vikalpovimbasaṅkāśo dṛṣṭidoṣairna lipyate /",
  "SA22bsa006_u:233": "anbhasā lipyate naivayadvadudakacandramāḥ] //",
  "SA22bsa006_u:234": "Cvp_117 anādivāsanāpaṅkairviliptaṃcittaratnakam /",
  "SA22bsa006_u:235": "prajñopāyajalenaiva[kṣālitaṃsamprakāśate] //",
  "SA22bsa006_u:236": "Cvp_118 svādhidevatayogasyasthiracittasya dhīmataḥ /",
  "SA22bsa006_u:237": "muktaḥ kudṛṣṭimeghaiścabhāsate cittabhāskaraḥ //",
  "SA22bsa006_u:238": "Cvp_119 [prajñālakṣmaparicchedebhūtārthasya viniścayāt /",
  "SA22bsa006_u:239": "dharmadhāturupādeyo 'vidyāvyatyayavarjanāt //",
  "SA22bsa006_u:240": "Cvp_120 prajñāmudgaravidhvaste]sahasā kalpanāghaṭe /",
  "SA22bsa006_u:241": "prakṛtyā nirmalaḥ svacchojñānadīpaḥ prakāśate //",
  "SA22bsa006_u:242": "Cvp_121 suprasiddhāni bhūtānikṣityagnijalavāyavaḥ /",
  "SA22bsa006_u:243": "kriyante hyanyathāvijñairmantrasāmarthyayogataḥ //",
  "SA22bsa006_u:244": "Cvp_122 sarvavādaṃ parityajyamantravādaṃ samācaret /",
  "SA22bsa006_u:245": "yasya mantrasyasāmarthyātsaukhyabhāvo 'pi sidhyati //",
  "SA22bsa006_u:246": "Cvp_123 triratnaṃ na parityājyaṃbodhicittaṃ tathā guruḥ /",
  "SA22bsa006_u:247": "na vadhyāḥ prāṇinaḥ ke 'pisamayānyapyadhiṣṭhayet //",
  "SA22bsa006_u:248": "Cvp_124 madhu raktaṃ sakarpūraṃraktacandanayojitam /",
  "SA22bsa006_u:249": "munivajrodakaṃ caivapañcaitānyapyadhiṣṭhayet //",
  "SA22bsa006_u:250": "Cvp_125 anyaiścasamayairdivyaiścittasyotkarṣakārakaiḥ /",
  "SA22bsa006_u:251": "mārutakṣobhaśāntyarthaṃprīṇayeccittavajrakam //",
  "SA22bsa006_u:252": "Cvp_126 [nāśucibhāvaāśaṅkyo 'vikalpyayogalīlayā /",
  "SA22bsa006_u:253": "samāyuktena cittena mantrīsarvaṃ samācaret] //",
  "SA22bsa006_u:254": "Cvp_127 makṣikāpadamātreṇaviṣeṇāpyabhibhūyate /",
  "SA22bsa006_u:255": "aṇumātrā ghṛṇā śaṅkāmṛtyukaṣṭena saṃyutā //",
  "SA22bsa006_u:256": "Cvp_128 suyuddhaṃ vācaredvijñaḥsupalāyanameva vā /",
  "SA22bsa006_u:257": "āntarālikabhāvastu vyarthovai patanaṃ bhavet //",
  "SA22bsa006_u:258": "Cvp_129 gurorājñāñca mudrāñcachāyāmapi na laṅghayet /",
  "SA22bsa006_u:259": "guṇāstasya paraṃ grāhyā doṣānaiva kadācana //",
  "SA22bsa006_u:260": "Cvp_130 ācāryaḥ paramo devaḥpūjanīyaḥ prayatnataḥ /",
  "SA22bsa006_u:261": "svayaṃ vajradharo rājāsākṣādrūpeṇa saṃsthitaḥ //",
  "SA22bsa006_u:262": "Cvp_131 yathodakamaṇiḥ śuddhaḥkaluṣodakaśodhakaḥ /",
  "SA22bsa006_u:263": "śraddhāmaṇistathāproktaścittaratnaviśodhakaḥ //",
  "SA22bsa006_u:264": "Cvp_132 śraddhāvānmuhyate ko 'piprajñācakṣurvivarjitaḥ /",
  "SA22bsa006_u:265": "utpādayedataḥprajñāmāgamādhigamātmikām //",
  "SA22bsa006_u:266": "Cvp_133 śrāddho bahuśrutaḥ prājñaḥprakṛtyā karuṇātmakaḥ /",
  "SA22bsa006_u:267": "jagadduḥkhavināśāyasukhopāyaṃ sa vindati //",
  "SA22bsa006_u:268": "Cvp_134 cittaviśuddhimādhāyayanmayopārjitaṃ sukham /",
  "SA22bsa006_u:269": "cittaviśuddhimādhāya tenāstusukhito janaḥ //",
  "SA22bsa006_u:270": "// kṛtiriyamāryadevapādānāmiti //"
}