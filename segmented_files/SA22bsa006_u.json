{
  "SA22bsa006_u:0_0": "Cittaviśuddhiprakaraṇa (Cvp)",
  "SA22bsa006_u:cvp_1_0": "[anādinidhanaṃ śāntaṃ bhāvābhāvavivarjitam /",
  "SA22bsa006_u:cvp_1_1": "nirvikalpaṃ nirālambamanavasthitamadvayam //",
  "SA22bsa006_u:cvp_2_0": "adṛṣṭāntamanākhyānamacintyamanidarśanam /",
  "SA22bsa006_u:cvp_2_1": "anāśrayāpratiṣṭhānaṃ nirvikāramasaṃskṛtam //",
  "SA22bsa006_u:cvp_3_0": "sarveṣāmāśrayaṃ buddhaṃ karuṇāmayavigraham /",
  "SA22bsa006_u:cvp_3_1": "nānādhimuktasattvānāṃ nānopāyapradarśakam //",
  "SA22bsa006_u:cvp_4_0": "mahārāgaṃ namaskṛtya padmanarteśvaraṃ prabhum /",
  "SA22bsa006_u:cvp_4_1": "iha stokaṃ pravakṣyāmi svacittapratyavekṣaṇāt //",
  "SA22bsa006_u:cvp_5_0": "yogācārasya nayataḥ sarvameva suniścitam /",
  "SA22bsa006_u:cvp_5_1": "tatsarvamiha vaktavyaṃ tasmādevatsamācaret] //",
  "SA22bsa006_u:cvp_6_0": "yena yena hi bandhyante jantavo raudrakarmaṇā /",
  "SA22bsa006_u:cvp_6_1": "sopāyena tu tenaiva mucyante bhavabandhanāt //",
  "SA22bsa006_u:cvp_7_0": "[viśuddhereva sattvasya viśuddhaṃ jāyate phalam] /",
  "SA22bsa006_u:cvp_7_1": "mahāyāne suvispaṣṭamuktametatsuvistaram //",
  "SA22bsa006_u:cvp_8_0": "dharmapudgalanairātmyaṃ cittamātraṃ jagau muniḥ /",
  "SA22bsa006_u:cvp_8_1": "tato 'pi sarvamutpannamāgamātyanukūlakam //",
  "SA22bsa006_u:cvp_9_0": "bhāvagrāhagrahāveśagṛhītānpraticoditaḥ /",
  "SA22bsa006_u:cvp_9_1": "āgame 'pi hi suvyakto vistaraḥ karuṇātmanā //",
  "SA22bsa006_u:cvp_10_0": "manaḥpūrvaṅgamā dharmā manaḥśreṣṭhā manojavāḥ /",
  "SA22bsa006_u:cvp_10_1": "manasā hi prasannena bhāṣate vā karoti vā //",
  "SA22bsa006_u:cvp_11_0": "svapitā bhikṣuṇā vṛddhaḥ śīghraṃ gaccheti preritaḥ /",
  "SA22bsa006_u:cvp_11_1": "patanācca mṛte tasminnānantaryeṇa yujyate //",
  "SA22bsa006_u:cvp_12_0": "sumlānenārhatādioṣṭo maṅgalaṃ paripīḍaya /",
  "SA22bsa006_u:cvp_12_1": "upasthāyakabhikṣuḥ sa mṛte tasminna doṣabhāk //",
  "SA22bsa006_u:cvp_13_0": "andhasaṃjñayā nāndhāṃstu mārayandoṣamaśrute /",
  "SA22bsa006_u:cvp_13_1": "ityuktaṃ vinaye vyaktaṃ na doṣo 'duṣṭacetasām //",
  "SA22bsa006_u:cvp_14_0": "na stūpakhanane doṣastatsaṃskāradhiyā yataḥ /",
  "SA22bsa006_u:cvp_14_1": "kevalaṃ puṇyarāśiḥ syādupānantaryakāraṇāt //",
  "SA22bsa006_u:cvp_15_0": "upānadyugalaṃ dattvā munermūrdhni śubhāśayāt /",
  "SA22bsa006_u:cvp_15_1": "apanīya tathā cāndho rājyaṃ phalamavāpnutaḥ //",
  "SA22bsa006_u:cvp_16_0": "tasmādāśayamūlā hi pāpapuṇyavyavasthitiḥ /",
  "SA22bsa006_u:cvp_16_1": "ityuktamāgame yasmānnāpattiḥ śubhacetasām //",
  "SA22bsa006_u:cvp_17_0": "svādhidaivatayogātmā jagadarthakvatodyamaḥ /",
  "SA22bsa006_u:cvp_17_1": "bhuñjāno viṣayān yogī mucyate na ca lipyate //",
  "SA22bsa006_u:cvp_18_0": "yathaiva viṣatattvajño viṣamālokya bhakṣayan /",
  "SA22bsa006_u:cvp_18_1": "kevalaṃ muhyate nāsau rogamuktaśca jāyate //",
  "SA22bsa006_u:cvp_19_0": "māyāmarīcigandharvanagarasvaprasannibham /",
  "SA22bsa006_u:cvp_19_1": "jagatsarvaṃ samālokya kiṃ kathaṃ kena bhujyate //",
  "SA22bsa006_u:cvp_20_0": "bālā rajyanti rūpeṣu vairāgyaṃ yānti madhyamāḥ /",
  "SA22bsa006_u:cvp_20_1": "svabhāvajñā vimucyante rūpasyottamabuddhayaḥ //",
  "SA22bsa006_u:cvp_21_0": "vicintya samayaṃ sarvaṃ devatāpūjanāvidhim /",
  "SA22bsa006_u:cvp_21_1": "śuddhamālokya niḥśaṅkaṃ bhoktavyaṃ mantracoditam //",
  "SA22bsa006_u:cvp_22_0": "śodhyaṃ bodhyaṃ tathā dīpyamakṣaratrayayogataḥ /",
  "SA22bsa006_u:cvp_22_1": "aṅguṣṭhānāmikāgrābhyāṃ prīṇayecca tathāgatān //",
  "SA22bsa006_u:cvp_23_0": "yatsatyamiti bālānāṃ tanmithyā khalu yoginām /",
  "SA22bsa006_u:cvp_23_1": "gacchannantamanenaiva na baddho na ca mucyate //",
  "SA22bsa006_u:cvp_24_0": "saṃsāraṃ caiva nirvāṇaṃ manyante 'tattvadarśinaḥ /",
  "SA22bsa006_u:cvp_24_1": "na saṃsāraṃ na nirvāṇaṃ manyante 'tattvadarśinaḥ //",
  "SA22bsa006_u:cvp_25_0": "vikalpo hi mahāgrāhaḥ saṃsārodadhipātakaḥ /",
  "SA22bsa006_u:cvp_25_1": "avikalpā mahātmāno mucyante bhavabandhanāt //",
  "SA22bsa006_u:cvp_26_0": "śaṅkāviṣeṇa bādhyante viṣeṇeva pṛthagjanāḥ /",
  "SA22bsa006_u:cvp_26_1": "tāmevotkhātya nirmūlaṃ vicaretkaruṇātmakaḥ //",
  "SA22bsa006_u:cvp_27_0": "yathaiva sphaṭikaḥ svacchaḥ pararāgeṇa rajyate /",
  "SA22bsa006_u:cvp_27_1": "tathaiva cittaratnaṃ tu kalpanārāgarañjitam //",
  "SA22bsa006_u:cvp_28_0": "prakṛtyā kalpanārāgairviviktaṃ cittaratnakam /",
  "SA22bsa006_u:cvp_28_1": "ādiśuddhamanutpannaṃ niḥsvabhāvamanāvilam //",
  "SA22bsa006_u:cvp_29_0": "tattadyatnena kartavyaṃ yadyadbālairvigarhitam /",
  "SA22bsa006_u:cvp_29_1": "svādhidaivatayogena cittanirmalakāraṇāt //",
  "SA22bsa006_u:cvp_30_0": "rāgāgniviṣasaṃmugdhā yogināṃ śubhacetasā /",
  "SA22bsa006_u:cvp_30_1": "kāmitāḥ khalu kāminyaḥ kāmamokṣaphalāvahāḥ //",
  "SA22bsa006_u:cvp_31_0": "yathā svagarūḍaṃ dhyātvā viṣamākṛṣya saṃpiban /",
  "SA22bsa006_u:cvp_31_1": "karoti nirviṣaṃ sādhyaṃ na viṣeṇābhibhūyate //",
  "SA22bsa006_u:cvp_32_0": "dvādaśayojanavyāsaṃ cakraṃ vai śirasi bhramat /",
  "SA22bsa006_u:cvp_32_1": "bodhicittaṃ samutpādya apanītamiti śrutiḥ //",
  "SA22bsa006_u:cvp_33_0": "bodhicittaṃ samutpādya sambodhau kṛtacetasā /",
  "SA22bsa006_u:cvp_33_1": "tatrāsti yanna kartavyaṃ jagadudvaraṇāśayā //",
  "SA22bsa006_u:cvp_34_0": "ādiśuddhamanutpannaṃ niḥsvabhāvamanāvilam /",
  "SA22bsa006_u:cvp_34_1": "jagadbhāvena sampaśyanna baddho na ca mucyate //",
  "SA22bsa006_u:cvp_35_0": "vicintya vidhivadyogī devatāguṇavistaram /",
  "SA22bsa006_u:cvp_35_1": "rajyate rāgacittena rāgabhogeṇa mucyate //",
  "SA22bsa006_u:cvp_36_0": "kiṃ kurmaḥ kutra vai labhyā vicitrā bhāvaśaktayaḥ /",
  "SA22bsa006_u:cvp_36_1": "viṣākrānto yathā kaścidviṣeṇaiva tu nirviṣaḥ //",
  "SA22bsa006_u:cvp_37_0": "karṇājjalaṃ jalenaiva kaṇṭakenaiva kaṇṭakam /",
  "SA22bsa006_u:cvp_37_1": "rāgeṇaiva tathārāgamudvaranti maṇīṣiṇaḥ //",
  "SA22bsa006_u:cvp_38_0": "yathaiva rajako vastraṃ malenaiva tu nirmalam /",
  "SA22bsa006_u:cvp_38_1": "kuryādvijñastathātmānaṃ malenaiva tu nirmalam //",
  "SA22bsa006_u:cvp_39_0": "yathā bhavati saṃśuddho rajonirghṛṣṭadarpaṇaḥ /",
  "SA22bsa006_u:cvp_39_1": "sevitastu tathā vijñairdoṣo doṣavināśanaḥ //",
  "SA22bsa006_u:cvp_40_0": "lohapiṇḍo jale kṣipto majjatyeva tu kevalam /",
  "SA22bsa006_u:cvp_40_1": "pātrīkṛto sa evāndhaṃ tārayettarati svayam //",
  "SA22bsa006_u:cvp_41_0": "tavdatpātrīkṛtaṃ cittaṃ prajñopāyavidhānataḥ /",
  "SA22bsa006_u:cvp_41_1": "bhuñjāno mucyate kāmo mocayatyaparānapi //",
  "SA22bsa006_u:cvp_42_0": "durvijñaiḥ sevitaḥ kāmaḥ kāmo bhavati bandhanam /",
  "SA22bsa006_u:cvp_42_1": "sa eva sevito vijñaiḥ kāmo mokṣaprasādhakaḥ //",
  "SA22bsa006_u:cvp_43_0": "prasiddhaṃ sakale loke kṣīraṃ viṣavināśanam /",
  "SA22bsa006_u:cvp_43_1": "tadeva phaṇibhiḥ pītaṃ sutarāṃ viṣavardhanam //",
  "SA22bsa006_u:cvp_44_0": "jale kṣīraṃ yathāviṣṭaṃ haṃso pibati paṇḍitaḥ /",
  "SA22bsa006_u:cvp_44_1": "saviṣān viṣāyāṃstadvad bhuktvā muktaśca paṇḍitaḥ //",
  "SA22bsa006_u:cvp_45_0": "yathaiva vidhivadbhuktaṃ viṣamapyamṛtāyate /",
  "SA22bsa006_u:cvp_45_1": "durbhuktaṃ ghṛtapūrādi bālānāntu viṣāyate //",
  "SA22bsa006_u:cvp_46_0": "idameva hi yaccittaṃ śodhitaṃ hetubhiḥ śubhaiḥ /",
  "SA22bsa006_u:cvp_46_1": "nirvikalpaṃ nirālambaṃ bhāti prakṛtinirmalam //",
  "SA22bsa006_u:cvp_47_0": "yathā vahniḥ kṛśopyeṣa tailavartyādisaṃskṛtaḥ /",
  "SA22bsa006_u:cvp_47_1": "dīpo nirmalaniṣkampaḥ sthirastimiranāśanaḥ //",
  "SA22bsa006_u:cvp_48_0": "vaṭabījaṃ yathā sūkṣmaṃ sahakārasamanvitam /",
  "SA22bsa006_u:cvp_48_1": "śākhāmūlaphalopetaṃ mahāvṛkṣavidhāyakam //",
  "SA22bsa006_u:cvp_49_0": "haridrācūrṇasaṃyogādvarṇāntaramiti smṛtam /",
  "SA22bsa006_u:cvp_49_1": "prajñopāyasamāyogāddharmadhātuṃ tathā viduḥ //",
  "SA22bsa006_u:cvp_50_0": "ghṛtaṃ ca madhusaṃyuktaṃ samāṃśaṃ viṣatāṃ vrajet /",
  "SA22bsa006_u:cvp_50_1": "tadeva vidhivadbhuiktamutkṛṣṭaṃ tu rasāyanam //",
  "SA22bsa006_u:cvp_51_0": "rasaghṛṣṭaṃ yathā tāmraṃ nirdoṣaṃ kāñcanaṃ bhavet /",
  "SA22bsa006_u:cvp_51_1": "jñānaśuddhyā tathā kleśāḥ samyak kalyāṇakārakāḥ //",
  "SA22bsa006_u:cvp_52_0": "hīnayānābhirūḍhānāṃ mṛtyuśaṅkā pade pade /",
  "SA22bsa006_u:cvp_52_1": "saṃgrāmajayacittastu dūra eva vyavasthitaḥ //",
  "SA22bsa006_u:cvp_53_0": "mahāyānābhirūḍhastu karuṇādharmavarmitaḥ /",
  "SA22bsa006_u:cvp_53_1": "prajñātantudhanurbāṇo jagaduḍvaraṇāśayaḥ //",
  "SA22bsa006_u:cvp_54_0": "mahāsattvo mahopāyaḥ sthirabudviratandritaḥ /",
  "SA22bsa006_u:cvp_54_1": "jitvā dustarasaṅgrāmaṃ tārayedaparānapi //",
  "SA22bsa006_u:cvp_55_0": "paśavo 'pi hi kliśyante svārthamātraparāyaṇāḥ /",
  "SA22bsa006_u:cvp_55_1": "jagadarthavidhātāro dhanyāste viralā janāḥ //",
  "SA22bsa006_u:cvp_56_0": "śītavātādiduḥkhāni sahante svārthalampaṭāḥ /",
  "SA22bsa006_u:cvp_56_1": "jagadarthapravṛttāste na sahante kathaṃ nu te //",
  "SA22bsa006_u:cvp_57_0": "nārakāṇyapi duḥkhāni soḍhavyāni kṛpālubhiḥ /",
  "SA22bsa006_u:cvp_57_1": "śītavātādiduḥkhāni kastānyapi vicārayet //",
  "SA22bsa006_u:cvp_58_0": "na kaṣṭakalpanāṃ kuryānnopavāsena ca kriyām /",
  "SA22bsa006_u:cvp_58_1": "snānaṃ śaucaṃ na caivātra grāmadharmaṃ vivarjayet //",
  "SA22bsa006_u:cvp_59_0": "nakhadantāsthimajjānaḥ pituḥ śukravikārajāḥ /",
  "SA22bsa006_u:cvp_59_1": "māṃsaśoṇitakeśādi mātṛśoṇitasambhavam //",
  "SA22bsa006_u:cvp_60_0": "itthamaśucisambhūtaḥ piṇḍo yo 'śucipūritaḥ /",
  "SA22bsa006_u:cvp_60_1": "kathaṃ saṃstādṛśaḥ kāyo gaṅgāsnānena śudhyati //",
  "SA22bsa006_u:cvp_61_0": "na hyaśucirghaṭastoyaiḥ kṣālito 'pi punaḥ punaḥ /",
  "SA22bsa006_u:cvp_61_1": "tadvadaśucisampūrṇaḥ piṇḍo 'pi na viśudhyati //",
  "SA22bsa006_u:cvp_62_0": "pratarannapi gaṅgāyāṃ naiva śvā śuddhimarhati /",
  "SA22bsa006_u:cvp_62_1": "taddadvarmadhiyāṃ puṃsāṃ tīrthasnānaṃ tu niṣphalam //",
  "SA22bsa006_u:cvp_63_0": "dharmo yadi bhavetsnānātkaivartānāṃ kṛtārthatā /",
  "SA22bsa006_u:cvp_63_1": "naktandivaṃ jalasthānāṃ matsyādīnāṃ tu kā kathā //",
  "SA22bsa006_u:cvp_64_0": "pāpakṣayo 'pi snānena naiva syāditi niścayaḥ /",
  "SA22bsa006_u:cvp_64_1": "yato rāgādivṛddhistu dṛśyate tīrthasevinām //",
  "SA22bsa006_u:cvp_65_0": "rāgo dveṣaśca mohaśca īrṣyā tṛṣṇā ca sarvadā /",
  "SA22bsa006_u:cvp_65_1": "pāpānāṃ mūlamākhyātaṃ naiṣāṃ snānena śodhanam //",
  "SA22bsa006_u:cvp_66_0": "ātmātmīyagrahādete sambhavantīha janminaḥ /",
  "SA22bsa006_u:cvp_66_1": "avidyāhetukaḥ so 'pi sāvidyā bhrāntiriṣyate //",
  "SA22bsa006_u:cvp_67_0": "raupyabuddhiryathā śuktau śuktidṛṣṭau nivartate /",
  "SA22bsa006_u:cvp_67_1": "nairātmyadarśanātsāpi nirmūlamavasīdati //",
  "SA22bsa006_u:cvp_68_0": "sarpabuddhiryathā rajjau rajjudṛṣṭau nivartate /",
  "SA22bsa006_u:cvp_68_1": "sarpabuddhiḥ punastatra naiva syādiha janmani //",
  "SA22bsa006_u:cvp_69_0": "sattvabuddhistathātrāpi vajrajñānānnivartate /",
  "SA22bsa006_u:cvp_69_1": "na bhāvaḥ sambhavettatra dagdhabīja ivāṅkuraḥ //",
  "SA22bsa006_u:cvp_70_0": "nairātmyaśucisaṅgātaḥ piṇḍaḥ prakṛtinirmalaḥ /",
  "SA22bsa006_u:cvp_70_1": "tasya santāpane dharmaḥ kaṣṭaṃ bālairvikalpitaḥ //",
  "SA22bsa006_u:cvp_71_0": "candrodayavyayañjāpi apekṣya tithikalpanā /",
  "SA22bsa006_u:cvp_71_1": "sūryodayavyayenāpi divārātrivyavasthitiḥ //",
  "SA22bsa006_u:cvp_72_0": "pūrvādivyavahāro 'pi kalpanāpekṣayā kṛtaḥ /",
  "SA22bsa006_u:cvp_72_1": "grahanakṣatrarāśyādi sarvalokairvikalpitam //",
  "SA22bsa006_u:cvp_73_0": "śītoṣṇavarṣaṇāpekṣā tathaiva ṛtukalpanā /",
  "SA22bsa006_u:cvp_73_1": "svakarmaphalabhogo 'yaṃ śubhāśubhagrahoditaḥ //",
  "SA22bsa006_u:cvp_74_0": "avidyākardamāliptaṃ cittacintāmaṇiṃ pumān /",
  "SA22bsa006_u:cvp_74_1": "pravṛttaḥ kṣālituṃ vidvān ko 'vidyāṃ vṛṃhayetpunaḥ //",
  "SA22bsa006_u:cvp_75_0": "na grahatithinakṣatradeśakālādyapekṣaṇam /",
  "SA22bsa006_u:cvp_75_1": "viharennirvikalpastu nirnimittamaśaṅkitaḥ //",
  "SA22bsa006_u:cvp_76_0": "yadyadindriyamārgatvaṃ yāyāttattatsvabhāvataḥ /",
  "SA22bsa006_u:cvp_76_1": "susamāhitayogena sarvaṃ buddhamayaṃ vadet //",
  "SA22bsa006_u:cvp_77_0": "cakṣurvairocano buddhaḥ śravaṇaṃ vajrasūryakaḥ /",
  "SA22bsa006_u:cvp_77_1": "ghrāṇaṃ ca paramāśvastu padmanarteśvaro mukham //",
  "SA22bsa006_u:cvp_78_0": "kāyaḥ śrīheruko rājā vajrasattvaśca mānasam /",
  "SA22bsa006_u:cvp_78_1": "evaṃ samyak sadā yogī vicaretkaruṇātmakaḥ //",
  "SA22bsa006_u:cvp_79_0": "siddhāntī nirvikalpo 'sau sthirakalpastu dhīdhanaḥ /",
  "SA22bsa006_u:cvp_79_1": "yatheṣṭaceṣṭāvyāpāraḥ sarvabhuk sarvakṛttathā //",
  "SA22bsa006_u:cvp_80_0": "sarvakāmakriyākārī yathārucitaceṣṭitaḥ /",
  "SA22bsa006_u:cvp_80_1": "utthito vā niṣaṇo vā caṅkramanvā svapaṃstathā //",
  "SA22bsa006_u:cvp_81_0": "amaṇḍalapraviṣṭo vā sarvāvaraṇavānapi /",
  "SA22bsa006_u:cvp_81_1": "svādhidaivatayogātmā mandapuṇyo 'pi sidhyati //",
  "SA22bsa006_u:cvp_82_0": "anena sarvasauritvaṃ sarvabuddhatvameva vā /",
  "SA22bsa006_u:cvp_82_1": "janmanīhaiva tattvajñaḥ samprāpnoti na saṃśayaḥ //",
  "SA22bsa006_u:cvp_83_0": "yathā prākṛtalokena yogiloko na bādhyate /",
  "SA22bsa006_u:cvp_83_1": "bādhyante dhīviśeṣeṇa yogino 'pyuttarottaraiḥ //",
  "SA22bsa006_u:cvp_84_0": "mahāprajñāmahopāyamahākṛpādhimokṣataḥ /",
  "SA22bsa006_u:cvp_84_1": "mahāyānasamuddiṣṭaṃ mahāsattvasya gocaram //",
  "SA22bsa006_u:cvp_85_0": "yatkalpānāmasaṃkhyeyairna prāptaṃ bahubhirmatam /",
  "SA22bsa006_u:cvp_85_1": "janmanyatraiva buddhatvaṃ prāpyate nātra saṃśayaḥ //",
  "SA22bsa006_u:cvp_86_0": "mahāyānasya māhātmyaṃ puṇyajñānena sambhṛtam /",
  "SA22bsa006_u:cvp_86_1": "sarvajñatvaṃ padaṃ ramyaṃ sadyo janmani labhyate //",
  "SA22bsa006_u:cvp_87_0": "āgamaśruticintā tu mahāyāne na gṛhyate /",
  "SA22bsa006_u:cvp_87_1": "āśayānuśayābhedād yānābhedaḥ prakāśyate //",
  "SA22bsa006_u:cvp_88_0": "anya evādhimokṣo 'yaṃ tathānyā bodhicārikā /",
  "SA22bsa006_u:cvp_88_1": "anyā cittaviśuddhiśca phalamandhadihocyate //",
  "SA22bsa006_u:cvp_89_0": "samīpe nirmalādarśe rūpaṃ nirmalacakṣuṣaḥ /",
  "SA22bsa006_u:cvp_89_1": "yathā bhāti suvispaṣṭaṃ svacchaprakṛtinirmalam //",
  "SA22bsa006_u:cvp_90_0": "vidhūtakalpanājālaviṣpraṣṭaśuddhacetasāṃ /",
  "SA22bsa006_u:cvp_90_1": "yogināñca tathā jñānaṃ prajñānirmaladarpaṇaiḥ //",
  "SA22bsa006_u:cvp_91_0": "sūryakāntisamāśliṣṭasūryakāntamaṇau yathā /",
  "SA22bsa006_u:cvp_91_1": "sahasā prajvalatyagniḥ samathaḥ svārthasādhane //",
  "SA22bsa006_u:cvp_92_0": "apāstakalpanājālaṃ sūryakāntanibhaṃ manaḥ /",
  "SA22bsa006_u:cvp_92_1": "prajñāsūryāṃ śusaṃśliṣṭaṃ tadvajjvalati yoginām //",
  "SA22bsa006_u:cvp_93_0": "kāṣṭhadvayanigharṣeṇa yathā jvalati pāvakaḥ /",
  "SA22bsa006_u:cvp_93_1": "ādimadhyāntasaṃśuddhaḥ sarvavastuprakāśakaḥ /",
  "SA22bsa006_u:cvp_93_2": "prajñopāyasamāyogādyogijñānaṃ tathā viduḥ //",
  "SA22bsa006_u:cvp_94_0": "yathaivaikaḥ pradīpo 'yaṃ varttyantarasamāśritaḥ /",
  "SA22bsa006_u:cvp_94_1": "yathāsvārthaṃ yathāsthānaṃ karotyuccaiḥ prakāśanam //",
  "SA22bsa006_u:cvp_95_0": "sphuraṇānantamūrtistu prajñopāyavibhāvanaiḥ /",
  "SA22bsa006_u:cvp_95_1": "nānādhimuktasattvānāṃ yathākṛtyamanuṣṭhayet //",
  "SA22bsa006_u:cvp_96_0": "vidhi jñohi yathā kaścitkṣīrādamṛtamuddharet /",
  "SA22bsa006_u:cvp_96_1": "nirdoṣaṃ śītalaṃ hṛdyaṃ sarvavyādhivināśanam //",
  "SA22bsa006_u:cvp_97_0": "prajñākṣīramahopāyādvidhivanmathanotthitaḥ /",
  "SA22bsa006_u:cvp_97_1": "viśuddhadharmadhātuḥ sa sukhāsukhavināśanaḥ //",
  "SA22bsa006_u:cvp_98_0": "yathā latā samudbhūtā phalapuṣpasamanvitā /",
  "SA22bsa006_u:cvp_98_1": "tathaikakṣaṇasambodhiḥ sambhāradvayasaṃyutā //",
  "SA22bsa006_u:cvp_99_0": "[vaśadveṣagatistambha] varṣaṇākarṣaṇādikam /",
  "SA22bsa006_u:cvp_99_1": "madyamāṃsarato yogī kurvannāpyupalipyate //",
  "SA22bsa006_u:cvp_100_0": "[hastakaṅkaṇabimbāya ki]mādarśaḥ samīkṣyate /",
  "SA22bsa006_u:cvp_100_1": "mahāyāne yato 'dyāpi mantrasāmarthyadarśanam //",
  "SA22bsa006_u:cvp_101_0": "mātṛduhitṛsambandha[stattvato 'tra na kalpyate /",
  "SA22bsa006_u:cvp_101_1": "bhagnāyodhūpavarttīva] jagadāha tathāgataḥ //",
  "SA22bsa006_u:cvp_102_0": "pañcabhūtātmakaṃ śukraṃ śoṇitañcāpi tādṛśam /",
  "SA22bsa006_u:cvp_102_1": "tanmayaḥ khalu piṇḍo 'yaṃ ko vipraḥ kaśca vāntyajaḥ //",
  "SA22bsa006_u:cvp_103_0": "[pañcaskandhātmakaṃ sarvaṃ]śarīraṃ khalu bhikṣavaḥ /",
  "SA22bsa006_u:cvp_103_1": "anityaṃ duḥkhaśūnyañca na jātirna ca jātimān //",
  "SA22bsa006_u:cvp_104_0": "kaivarttīgarbhambhūtaḥ kaściñcā[ṇḍālajātimān /",
  "SA22bsa006_u:cvp_104_1": "tapasā brāhmaṇo jātastasmājjātirakāraṇam //",
  "SA22bsa006_u:cvp_105_0": "svasāraṃ mātaraṃ śvaśrūṃ svaputrīṃ bhāgineyikām /",
  "SA22bsa006_u:cvp_105_1": "brāhmaṇīṃ kṣatriyāṃ vaiśyāṃ vidhijñānena śūdrikām] //",
  "SA22bsa006_u:cvp_106_0": "ekāṅgavikalāṃ hīnāṃ garhītāmantyajāmapi /",
  "SA22bsa006_u:cvp_106_1": "yoṣitaṃ pūjayennityaṃ jñānavajraprabhāvanaiḥ //",
  "SA22bsa006_u:cvp_107_0": "[sarvadā smitavakreṇa mantravistṛtacakṣuṣā /",
  "SA22bsa006_u:cvp_107_1": "sambodhau cittamutpādyasvādhidaivatabhāvataḥ //",
  "SA22bsa006_u:cvp_108_0": "paśyeddṛśyaṃ kṣaṇaṃkiñcicchotavyaṃ śṛṇuyāttathā /",
  "SA22bsa006_u:cvp_108_1": "satyāsatyaviyuktaṃ tuvadedvākyamatandritaḥ] //",
  "SA22bsa006_u:cvp_109_0": "snānābhyañjanavastrādikhānapānādiyantataḥ /",
  "SA22bsa006_u:cvp_109_1": "svādhidaivatayogenacintayetpūjanāvidhim //",
  "SA22bsa006_u:cvp_110_0": "[gītaṃvādyaṃ tathā nṛtyaṃ sopāyena vratī bhajet /",
  "SA22bsa006_u:cvp_110_1": "akurvanniha bhāveṣusarveṣvabhiniveśanam //",
  "SA22bsa006_u:cvp_111_0": "svātmabhāvaprahāṇenatāpayenna tapasyayā] /",
  "SA22bsa006_u:cvp_111_1": "sukhādyathā sukhaṃdhyāyetsambuddho 'yamanāgataḥ //",
  "SA22bsa006_u:cvp_112_0": "sarvakāmopabhogaistu ramathamuktito 'bhayāt /",
  "SA22bsa006_u:cvp_112_1": "mā bhaiṣṭa nāsti vaḥ pāpaṃsamayo duratikramaḥ //",
  "SA22bsa006_u:cvp_113_0": "mantrasaṃskṛtakāṣṭhādidevatvamadhigacchati /",
  "SA22bsa006_u:cvp_113_1": "kiṃ punaḥ jñānavān kāyaḥkaṣṭaṃ mohaviceṣṭitam //",
  "SA22bsa006_u:cvp_114_0": "prākṛtatvamahaṅkāraṃparityajya samāhitaḥ /",
  "SA22bsa006_u:cvp_114_1": "prajñopāyavidhānenakriyāmimāṃ samācaret //",
  "SA22bsa006_u:cvp_115_0": "paṅkajātaṃ yathā padmaṃpaṅkadoṣairna lipyate /",
  "SA22bsa006_u:cvp_115_1": "vikalpavāsanādoṣaistathāyogī na lipyate //",
  "SA22bsa006_u:cvp_116_0": "[vikalpovimbasaṅkāśo dṛṣṭidoṣairna lipyate /",
  "SA22bsa006_u:cvp_116_1": "anbhasā lipyate naivayadvadudakacandramāḥ] //",
  "SA22bsa006_u:cvp_117_0": "anādivāsanāpaṅkairviliptaṃcittaratnakam /",
  "SA22bsa006_u:cvp_117_1": "prajñopāyajalenaiva[kṣālitaṃsamprakāśate] //",
  "SA22bsa006_u:cvp_118_0": "svādhidevatayogasyasthiracittasya dhīmataḥ /",
  "SA22bsa006_u:cvp_118_1": "muktaḥ kudṛṣṭimeghaiścabhāsate cittabhāskaraḥ //",
  "SA22bsa006_u:cvp_119_0": "[prajñālakṣmaparicchedebhūtārthasya viniścayāt /",
  "SA22bsa006_u:cvp_119_1": "dharmadhāturupādeyo 'vidyāvyatyayavarjanāt //",
  "SA22bsa006_u:cvp_120_0": "prajñāmudgaravidhvaste]sahasā kalpanāghaṭe /",
  "SA22bsa006_u:cvp_120_1": "prakṛtyā nirmalaḥ svacchojñānadīpaḥ prakāśate //",
  "SA22bsa006_u:cvp_121_0": "suprasiddhāni bhūtānikṣityagnijalavāyavaḥ /",
  "SA22bsa006_u:cvp_121_1": "kriyante hyanyathāvijñairmantrasāmarthyayogataḥ //",
  "SA22bsa006_u:cvp_122_0": "sarvavādaṃ parityajyamantravādaṃ samācaret /",
  "SA22bsa006_u:cvp_122_1": "yasya mantrasyasāmarthyātsaukhyabhāvo 'pi sidhyati //",
  "SA22bsa006_u:cvp_123_0": "triratnaṃ na parityājyaṃbodhicittaṃ tathā guruḥ /",
  "SA22bsa006_u:cvp_123_1": "na vadhyāḥ prāṇinaḥ ke 'pisamayānyapyadhiṣṭhayet //",
  "SA22bsa006_u:cvp_124_0": "madhu raktaṃ sakarpūraṃraktacandanayojitam /",
  "SA22bsa006_u:cvp_124_1": "munivajrodakaṃ caivapañcaitānyapyadhiṣṭhayet //",
  "SA22bsa006_u:cvp_125_0": "anyaiścasamayairdivyaiścittasyotkarṣakārakaiḥ /",
  "SA22bsa006_u:cvp_125_1": "mārutakṣobhaśāntyarthaṃprīṇayeccittavajrakam //",
  "SA22bsa006_u:cvp_126_0": "[nāśucibhāvaāśaṅkyo 'vikalpyayogalīlayā /",
  "SA22bsa006_u:cvp_126_1": "samāyuktena cittena mantrīsarvaṃ samācaret] //",
  "SA22bsa006_u:cvp_127_0": "makṣikāpadamātreṇaviṣeṇāpyabhibhūyate /",
  "SA22bsa006_u:cvp_127_1": "aṇumātrā ghṛṇā śaṅkāmṛtyukaṣṭena saṃyutā //",
  "SA22bsa006_u:cvp_128_0": "suyuddhaṃ vācaredvijñaḥsupalāyanameva vā /",
  "SA22bsa006_u:cvp_128_1": "āntarālikabhāvastu vyarthovai patanaṃ bhavet //",
  "SA22bsa006_u:cvp_129_0": "gurorājñāñca mudrāñcachāyāmapi na laṅghayet /",
  "SA22bsa006_u:cvp_129_1": "guṇāstasya paraṃ grāhyā doṣānaiva kadācana //",
  "SA22bsa006_u:cvp_130_0": "ācāryaḥ paramo devaḥpūjanīyaḥ prayatnataḥ /",
  "SA22bsa006_u:cvp_130_1": "svayaṃ vajradharo rājāsākṣādrūpeṇa saṃsthitaḥ //",
  "SA22bsa006_u:cvp_131_0": "yathodakamaṇiḥ śuddhaḥkaluṣodakaśodhakaḥ /",
  "SA22bsa006_u:cvp_131_1": "śraddhāmaṇistathāproktaścittaratnaviśodhakaḥ //",
  "SA22bsa006_u:cvp_132_0": "śraddhāvānmuhyate ko 'piprajñācakṣurvivarjitaḥ /",
  "SA22bsa006_u:cvp_132_1": "utpādayedataḥprajñāmāgamādhigamātmikām //",
  "SA22bsa006_u:cvp_133_0": "śrāddho bahuśrutaḥ prājñaḥprakṛtyā karuṇātmakaḥ /",
  "SA22bsa006_u:cvp_133_1": "jagadduḥkhavināśāyasukhopāyaṃ sa vindati //",
  "SA22bsa006_u:cvp_134_0": "cittaviśuddhimādhāyayanmayopārjitaṃ sukham /",
  "SA22bsa006_u:cvp_134_1": "cittaviśuddhimādhāya tenāstusukhito janaḥ //",
  "SA22bsa006_u:1_0": "// kṛtiriyamāryadevapādānāmiti //"
}