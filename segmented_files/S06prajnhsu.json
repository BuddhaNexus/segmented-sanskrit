{
  "S06prajnhsu:0_0": "Prajñāpāramitā-hṛdaya-sūtra",
  "S06prajnhsu:1_0": "Oṃ Namo Bhagavatyai Ārya-prajāpāramitāyai!",
  "S06prajnhsu:2_0": "Ārya Āvalokiteśvaro bodhisattvo gambhīraṃ",
  "S06prajnhsu:2_1": "prajñāpāramitā-cāryāṃ caramāṇo",
  "S06prajnhsu:2_2": "vyavalokayati sma, pañca-skandhās tāṃś ca",
  "S06prajnhsu:2_3": "svabhāva-śūnyān paśyati sma.",
  "S06prajnhsu:3_0": "Iha Śāriputra rūpaṃ śūnyatā, śūnyat'aiva rūpaṃ,",
  "S06prajnhsu:3_1": "rūpān na pṛthak śūnyatā,",
  "S06prajnhsu:3_2": "śūnyatāyā na pṛthag rūpaṃ,",
  "S06prajnhsu:3_3": "yad rūpaṃ sā śūnyatā,",
  "S06prajnhsu:3_4": "yā śūnyatā tad rūpaṃ.",
  "S06prajnhsu:3_5": "Evam eva vedanā-saṃjñā-saṃskārā-vijñānam.",
  "S06prajnhsu:4_0": "Iha Śāriputra sarva-dharmāḥ śūnyatā-lakṣaṇā",
  "S06prajnhsu:4_1": "anutpannā aniruddhā amalā avimalā anūnā aparipūrṇāḥ.",
  "S06prajnhsu:4_2": "Tasmāc Chāriputra śūnyatāyāṃ na rūpaṃ",
  "S06prajnhsu:4_3": "na vedanā na saṃjñā na saṃskārāḥ na vijñānaṃ,",
  "S06prajnhsu:4_4": "na cakṣuḥ-śrotra-ghrāṇa-jihvā-kāya-manāṃsi,",
  "S06prajnhsu:4_5": "na rūpa-śabda-gandha-rasa-spraṣṭavya-dharmāḥ,",
  "S06prajnhsu:4_6": "na cakṣur-dhātur yāvan na mano-vijñāna-dhātuḥ,",
  "S06prajnhsu:4_7": "n'āvidyā n'āvidyā-kṣayo yāvan na jarā-maraṇaṃ",
  "S06prajnhsu:4_8": "na jarā-maraṇa-kṣayo na duḥkha-samudaya-nirodha-mārgā",
  "S06prajnhsu:4_9": "na jñānaṃ na prāptir n'āprāptiḥ.",
  "S06prajnhsu:5_0": "Tasmāc Chāriputra aprāptitvād bodhisattvo",
  "S06prajnhsu:5_1": "prajñā-pāramitām āśritya viharaty acitt'āvaraṇaḥ.",
  "S06prajnhsu:5_2": "Citt'āvaraṇa-nāstitvād atrasto",
  "S06prajnhsu:5_3": "viparyās'ātikrānto niṣṭhā-nirvāṇaḥ.",
  "S06prajnhsu:5_4": "Tradhva-vyavasthitāḥ sarva-buddhāḥ",
  "S06prajnhsu:5_5": "prajñāpāramitām āśritya anuttarāṃ",
  "S06prajnhsu:5_6": "samyak-sambodhim abhisambuddhāḥ.",
  "S06prajnhsu:6_0": "Tasmāj jñātavyaṃ prajñāpāramitā mahā-mantro",
  "S06prajnhsu:6_1": "mahā-vidyā-mantro'nuttara-mantro",
  "S06prajnhsu:6_2": "samasama-mantraḥ sarva-duḥkha-praśamanaḥ satyam amithyatvāt.",
  "S06prajnhsu:6_3": "Prajñāpāramitāyām ukto mantraḥ, tadyathā -",
  "S06prajnhsu:6_4": "Oṃ gate gate pāragate pārasaṃgate bodhi svāhā.",
  "S06prajnhsu:7_0": "Ity ārya-prajñāpāramitā-hṛdayaṃ samāptam."
}