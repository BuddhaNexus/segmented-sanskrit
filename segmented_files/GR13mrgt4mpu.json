{
  "GR13mrgt4mpu:0": "athātmavatāṃ matvā [vā] svādhikāraṃ suduṣkaram /",
  "GR13mrgt4mpu:1": "yaterannatmavattāyai deśikādyā jigīṣavaḥ // MT_4.1 //",
  "GR13mrgt4mpu:2": "tadātmavattvaṃ yogitvaṃ jitākṣasyopapadyate /",
  "GR13mrgt4mpu:3": "prāṇāyāmādyanuṣṭhānāj jitākṣatvaṃ śanaiḥ śanaiḥ // MT_4.2 //",
  "GR13mrgt4mpu:4": "prāṇāyāmaḥ pratyāhāro dhāraṇā dhyānavīkṣaṇe /",
  "GR13mrgt4mpu:5": "japaḥ samādhirityaṅgāny aṅgī yogo 'ṣṭamaḥ svayam // MT_4.3 //",
  "GR13mrgt4mpu:6": "prāṇaḥ prāgudito vāyur āyāmo 'sya prakhedanam /",
  "GR13mrgt4mpu:7": "preraṇākṛṣṭisaṃrodha- lakṣaṇaṃ kratudoṣanut // MT_4.4 //",
  "GR13mrgt4mpu:8": "tataḥ sukhalavāsvāde teṣāṃ vṛttasya cetasaḥ /",
  "GR13mrgt4mpu:9": "pratyāhāro vidhātavyaḥ sarvato vinivartanam // MT_4.5 //",
  "GR13mrgt4mpu:10": "tenendriyārthasaṃsarga- vinivṛtteścito matiḥ /",
  "GR13mrgt4mpu:11": "dhāraṇāyogyatāmeti pade svecchāprakalpite // MT_4.6 //",
  "GR13mrgt4mpu:12": "cintā tadviṣayā dhyānaṃ taccādiṣṭaṃ muhurmuhuḥ /",
  "GR13mrgt4mpu:13": "tadekatānatāmeti sa samādhirvidhīyate // MT_4.7 //",
  "GR13mrgt4mpu:14": "japastadbhāṣaṇaṃ dhyeya- saṃmukhīkaraṇaṃ mune /",
  "GR13mrgt4mpu:15": "ūho 'bhivīkṣaṇaṃ vastu- vikalpānantaroditaḥ // MT_4.8 //",
  "GR13mrgt4mpu:16": "yadā vetti padaṃ heyam upādeyaṃ ca tatsthiteḥ /",
  "GR13mrgt4mpu:17": "tatpoṣakaṃ vipakṣaṃ ca yacca tatpoṣakaṃ param // MT_4.9 //",
  "GR13mrgt4mpu:18": "eṣu vyastasamasteṣu kṛtayatnasya yoginaḥ /",
  "GR13mrgt4mpu:19": "vibhānti śaktayo viśvaṃ vyāpya bhānoriva tviṣaḥ // MT_4.10 //",
  "GR13mrgt4mpu:20": "na tamīṣṭe naraḥ kaścit rakṣodānavamānavāḥ /",
  "GR13mrgt4mpu:21": "rorucānamatītyaitān dṛkkriyāprāṇarociṣā // MT_4.11 //",
  "GR13mrgt4mpu:22": "nivṛttermanaso hetuḥ saṃsargātprāṇakhedanam /",
  "GR13mrgt4mpu:23": "nivṛttirdhāraṇādīnāṃ mūlaṃ sarvasya tattataḥ // MT_4.12 //",
  "GR13mrgt4mpu:24": "vistareṇa suraśreṣṭha viprakṛṣṭaṃ ca yatsthitam /",
  "GR13mrgt4mpu:25": "yadanyatsādhanaṃ kiṃcid yogasiddheśca kathyatām // MT_4.13 //",
  "GR13mrgt4mpu:26": "na śakyaṃ vistarādvaktuṃ tatprasaṅgabhayādvidheḥ /",
  "GR13mrgt4mpu:27": "praśnasyāvaśyavācyatvāt tathāpyuddeśa ucyate // MT_4.14 //",
  "GR13mrgt4mpu:28": "mūtrādyutsṛjya vidhivad ekārdhadaśasaptabhiḥ /",
  "GR13mrgt4mpu:29": "mṛdbhirliṅgagudāsavya- hastayugmāni śaucayet // MT_4.15 //",
  "GR13mrgt4mpu:30": "dvirvratī trirapaḥ pītvā dvirvimṛjyānanaṃ spṛśet /",
  "GR13mrgt4mpu:31": "svabāhunābhihṛtkāni dvistrirvā śaucitādharaḥ // MT_4.16 //",
  "GR13mrgt4mpu:32": "hitajīrṇāśanasvasthas trikuḍyāveṣṭite gṛhe /",
  "GR13mrgt4mpu:33": "bādhāśūnye vanādau vā svāsanastha udaṅmukhaḥ // MT_4.17 //",
  "GR13mrgt4mpu:34": "namaskṛtya maheśānam umāskandagaṇādhipān /",
  "GR13mrgt4mpu:35": "ṛjugrīvāśirovakṣā nāsāgrāhitadṛgdvayaḥ // MT_4.18 //",
  "GR13mrgt4mpu:36": "pārṣṇibhyāṃ vṛṣaṇau rakṣan dantairdantānasaṃspṛśan /",
  "GR13mrgt4mpu:37": "viṣṭabhadeho dantāgre jihvāmādāya susthitaḥ // MT_4.19 //",
  "GR13mrgt4mpu:38": "recayecchaktiparyantaṃ puṭenaikena mārutam /",
  "GR13mrgt4mpu:39": "sa recakastadabhyāsād vedhavikṣiptakarmasu // MT_4.20 //",
  "GR13mrgt4mpu:40": "kramaśaḥ śaktatāmeti vikṛṣṭaviṣayeṣvapi /",
  "GR13mrgt4mpu:41": "bāhyena vāyunā mūrteḥ śaktisīmaprapūraṇam // MT_4.21 //",
  "GR13mrgt4mpu:42": "pūrakaḥ sa tadabhyāsāt sugurvapi vikarṣayet /",
  "GR13mrgt4mpu:43": "tyāgasaṃgrahaṇe hitvā nirodhaḥ kumbhakaḥ smṛtaḥ // MT_4.22 //",
  "GR13mrgt4mpu:44": "rodhaśaktistadabhyāsād vyaktimetyanivāritā /",
  "GR13mrgt4mpu:45": "tathāsya carato vidvān somasūryeśavartmasu // MT_4.23 //",
  "GR13mrgt4mpu:46": "taddharmayogyatāṃ buddhvā yogī saṃsādhayenmatam /",
  "GR13mrgt4mpu:47": "pūrakaṃ kumbhakaṃ vāpi bhajeccandrapathi sthite // MT_4.24 //",
  "GR13mrgt4mpu:48": "puṣṭimṛtyujayādyarthaṃ svātmano 'nyasya recakam /",
  "GR13mrgt4mpu:49": "anagnijvalane vṛkṣa- śoṣaṇe bījanāśane // MT_4.25 //",
  "GR13mrgt4mpu:50": "stobhonmādaviṣoddīpti- pramukheṣu tu recakam /",
  "GR13mrgt4mpu:51": "dhyānārcanajapādyeṣu dehatyāge ca śāṅkare // MT_4.26 //",
  "GR13mrgt4mpu:52": "kumbhako recakaśceṣṭo dīkṣāsaṃsthāpaneṣu ca /",
  "GR13mrgt4mpu:53": "yavīyān madhyamo jyeṣṭhaḥ sa tālairdvādaśādibhiḥ // MT_4.27 //",
  "GR13mrgt4mpu:54": "tālo dvādaśabhirjānu- pariṇāhaparibhramaiḥ /",
  "GR13mrgt4mpu:55": "so 'pi dhyānajapopetaḥ sagarbho 'nyastadujjhitaḥ // MT_4.28 //",
  "GR13mrgt4mpu:56": "yathā sagarbhaḥ sthairyāya manaso na tathetaraḥ /",
  "GR13mrgt4mpu:57": "prātarniśākṛtaṃ pāpaṃ dinānte ca divākṛtam // MT_4.29 //",
  "GR13mrgt4mpu:58": "hantyagarbho 'pi devānāṃ pracalatvaṃ pradhāvatām /",
  "GR13mrgt4mpu:59": "snāto bhavati tīrtheṣu sarvakratuṣu dīkṣitaḥ // MT_4.30 //",
  "GR13mrgt4mpu:60": "potaḥ pitṝṇāṃ yaḥ śaśvat- sagarbhamimamācaret /",
  "GR13mrgt4mpu:61": "dhyāyedadhvāntagaṃ devaṃ japettadvācakaṃ sadā // MT_4.31 //",
  "GR13mrgt4mpu:62": "kṣityādīnyatha tattvāni tadrūpādhikṛtāni vā /",
  "GR13mrgt4mpu:63": "yasmānnācetanaṃ tattvaṃ siddhamapyupakārakam // MT_4.32 //",
  "GR13mrgt4mpu:64": "śaivaṃ vapuriti dhyāyed ato yadyatsamīhitam /",
  "GR13mrgt4mpu:65": "siddhaye dhāraṇādīnāṃ vṛttīnāmanilasya ca // MT_4.33 //",
  "GR13mrgt4mpu:66": "sagarbhaṃ kumbhakaṃ vidvān ātiṣṭhedavikhinnadhīḥ /",
  "GR13mrgt4mpu:67": "ayamarkaguṇaṃ kālaṃ kṛtacittavyavasthitiḥ // MT_4.34 //",
  "GR13mrgt4mpu:68": "prāpnoti dhāraṇāśabdaṃ dhāraṇāsiddhidānataḥ /",
  "GR13mrgt4mpu:69": "sthityartho dhāraṇāśabdaḥ sthānārtho 'pyupacārataḥ // MT_4.35 //",
  "GR13mrgt4mpu:70": "sthānaṃ prāthamikasyemān yavanyādīni netarat /",
  "GR13mrgt4mpu:71": "tāni hemahimajyotiḥ- kṛṣṇasvacchāni rūpataḥ // MT_4.36 //",
  "GR13mrgt4mpu:72": "vedyardhamaṇḍalatryastra- vṛttapadmākṛtīni tu /",
  "GR13mrgt4mpu:73": "sthairyāpyāyanaviploṣa- preraṇāśūnyatāptaye // MT_4.37 //",
  "GR13mrgt4mpu:74": "bhavanti vajrakajvālā- binduśūnyānvitāni tu /",
  "GR13mrgt4mpu:75": "bādhakānyanuvartīni madhyasthānyavagatya ca // MT_4.38 //",
  "GR13mrgt4mpu:76": "yogī vyastasamastāni bibhṛyādiṣṭasiddhaye /",
  "GR13mrgt4mpu:77": "kva deśe dhāraṇārūpaṃ cintanīyaṃ vipaścitā // MT_4.39 //",
  "GR13mrgt4mpu:78": "kiṃ ca vyastasamastānāṃ phalaṃ brūhi sureśvara /",
  "GR13mrgt4mpu:79": "hṛdi cetasi vikṣipte dhārayetkṣitimarthavit // MT_4.40 //",
  "GR13mrgt4mpu:80": "jalaṃ pipāsitaḥ kaṇṭhe mande 'gnau jaṭhare 'nalam /",
  "GR13mrgt4mpu:81": "prāṇādivṛttisiddhyarthaṃ hṛtkaṇṭhādiṣu mārutam // MT_4.41 //",
  "GR13mrgt4mpu:82": "viṣādyabhibhave vyoma teṣu yatropayogavat /",
  "GR13mrgt4mpu:83": "khaṃ samasteṣu bhūteṣu vārivāyū śikhikṣitī // MT_4.42 //",
  "GR13mrgt4mpu:84": "vāryagnī bhūmipavanau vārikṣme analānilau /",
  "GR13mrgt4mpu:85": "madhyasthārātimitrāṇi catuṣke yugmayugmaśaḥ // MT_4.43 //",
  "GR13mrgt4mpu:86": "parijñāyeti matimān yojayediṣṭasiddhaye /",
  "GR13mrgt4mpu:87": "kāni prāṇādivṛttīnāṃ sthānānyasmin śarīrake // MT_4.44 //",
  "GR13mrgt4mpu:88": "jitāsu tāsu kiṃ ca syād iti brūhi surottama /",
  "GR13mrgt4mpu:89": "tasya hṛnnābhyuraḥkaṇṭha- pṛṣṭhadeśeṣu dhāraṇāt // MT_4.45 //",
  "GR13mrgt4mpu:90": "jayaḥ praṇayanādīnāṃ vṛttīnāṃ yogino bhavet /",
  "GR13mrgt4mpu:91": "jitapraṇayano dhatte svecchayā dehamātmanaḥ // MT_4.46 //",
  "GR13mrgt4mpu:92": "jitāpanayano 'śnāti śakṛdādi jahāti na /",
  "GR13mrgt4mpu:93": "vijitonnayano 'bhyeti vāgvaśitvādikān guṇān // MT_4.47 //",
  "GR13mrgt4mpu:94": "samānavṛtīvijayād bhavettyaktajaro vaśī /",
  "GR13mrgt4mpu:95": "vapurvihāravaśitā bhavedvinamane jite // MT_4.48 //",
  "GR13mrgt4mpu:96": "paṅkāmbukaṇṭakāsaṅgo vīryamakṣayamadbhutam /",
  "GR13mrgt4mpu:97": "dhāraṇā dvādaśa dhyānaṃ divyālokapravṛttidam // MT_4.49 //",
  "GR13mrgt4mpu:98": "samādhiraṇimādīnāṃ dvādaśaitāni kāraṇam /",
  "GR13mrgt4mpu:99": "prāṇāyāmaṃ vināpyevaṃ vaśyātmā cetasi sthitaḥ // MT_4.50 //",
  "GR13mrgt4mpu:100": "samabhyasyannavāpnoti guṇānuktānanantaram /",
  "GR13mrgt4mpu:101": "yadyadvastu yathoddiṣṭa- kramayogāt prapadyate // MT_4.51 //",
  "GR13mrgt4mpu:102": "tatra tatrāasya cidvyaktis tadvyāptiviṣayā bhavet /",
  "GR13mrgt4mpu:103": "iti bāhye sthite sarvam ākalayya svacakṣuṣā // MT_4.52 //",
  "GR13mrgt4mpu:104": "sarvān padarthān saṃtyajya śivatattvaṃ samabhyaset /",
  "GR13mrgt4mpu:105": "śivagarbhān samātiṣṭhan prāṇāyāmādikānapi // MT_4.53 //",
  "GR13mrgt4mpu:106": "jahāti janturyaḥ prāṇān sa śivatvaṃ prapadyate /",
  "GR13mrgt4mpu:107": "rūpaṃ paraṃ maheśasya dhyātuṃ śakyaṃ na jātucit // MT_4.54 //",
  "GR13mrgt4mpu:108": "vaicitryātkalpitaṃ bhrāntyai tatrāsthā cetasaḥ katham /",
  "GR13mrgt4mpu:109": "pārthivāpye vicitrāṅke na dhyeye dhāraṇe tadā // MT_4.55 //",
  "GR13mrgt4mpu:110": "tathāpyabhyāsataḥ siddhāḥ śrūyante yoginastayoḥ /",
  "GR13mrgt4mpu:111": "bhogaviplutacittasya kathaṃ syāccittasaṃsthitiḥ // MT_4.56 //",
  "GR13mrgt4mpu:112": "nādhikṛtyāviraktāṇūn prāhedaṃ sādhanaṃ haraḥ /",
  "GR13mrgt4mpu:113": "śakyate viṣayīkartuṃ jagadapyakhilaṃ śanaiḥ // MT_4.57 //",
  "GR13mrgt4mpu:114": "kimu citraṃ vapurdāntair vairāgyābhyāsaśālibhiḥ /",
  "GR13mrgt4mpu:115": "keyaṃ vā rūpakeyattā sarvādhiṣṭhānayoginaḥ // MT_4.58 //",
  "GR13mrgt4mpu:116": "sarvadā sarvabhūtānāṃ sarvākāropakāriṇaḥ /",
  "GR13mrgt4mpu:117": "sthānarūpapramāṇāni parikalpya svacetasā // MT_4.59 //",
  "GR13mrgt4mpu:118": "yatroparamate cittaṃ tattaddhyeyaṃ punaḥ punaḥ /",
  "GR13mrgt4mpu:119": "tenāsya cetasaḥ sthairyaṃ saviśeṣaguṇaḥ śanaiḥ // MT_4.60 //",
  "GR13mrgt4mpu:120": "unmīlya yogasaṃskāraṃ hatavighnasya jāyate /",
  "GR13mrgt4mpu:121": "evamātiṣṭhataḥ samyag vinaivākārakalpanām // MT_4.61 //",
  "GR13mrgt4mpu:122": "akiñciccintakasyāsya rūpamunmīlati svakam /",
  "GR13mrgt4mpu:123": "sarvārthadṛkkriyārūpam ānandamavyayam [..] // MT_4.62 //",
  "GR13mrgt4mpu:124": "yatprāpya na punarduḥkha- yogametyaśivāvaham /",
  "GR13mrgt4mpu:125": "etatsamastaguhyānāṃ guhyaṃ siddhāmarastutam // MT_4.63 //",
  "GR13mrgt4mpu:126": "sākṣādālocanaṃ śambhor atyutpāvanamuttamam /",
  "GR13mrgt4mpu:127": "nālpakāloṣitāyaitad deyaṃ nātipramādine /",
  "GR13mrgt4mpu:128": "nāmedhine nātapase yaśca nābhyarcayecchivam // MT_4.64 //",
  "GR13mrgt4mpu:129": "asyābhyāsāddivyasiddhyaṃśujālair iṣṭān lokān rorucāno vihṛtya /",
  "GR13mrgt4mpu:130": "kāle hitvāpāsravaṃ dehamāste svātmanyevāścaryacaryādhivāsaḥ // MT_4.65 //"
}