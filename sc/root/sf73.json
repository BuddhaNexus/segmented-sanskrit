{
    "sf73:0": "Pravāraṇasūtra",
    "sf73:1": "sugata pratibhātu te vāgīśa bhagavān avocat athāyuṣmāṁ vāgīśas tasyāṁ velāyāṁ gāthāṁ babhāṣe ||",
    "sf73:2": "iha paṁcadaśī viśuddhikā samitā |",
    "sf73:3": "paṁcaśatāś ca bhikṣavaḥ saṁyojana bandhana |",
    "sf73:4": "cchidaḥ sarve kṣīṇabhavā maharṣayaḥ ||",
    "sf73:5": "śuddhā upāsate śuddhaṁ vipramuktapunarbhavā |",
    "sf73:6": "prahīṇa-jāti-maranāḥ kṛtakṛtyā nirāsravāḥ ||",
    "sf73:7": "audhatyavicikitsecchā mānagranthabhavacchidaḥ",
    "sf73:8": "tṛṣṇā-śalyasya hartāro ’cita-tṛṣṇā-punarbhavāḥ ||",
    "sf73:9": "siṁho ’si nirupādānaṁ prahīṇa-bhaya-bhairava |",
    "sf73:10": "upadhiṁ samatikrāntaḥ āsravā nihatas tvayā ||",
    "sf73:11": "cakravarti yathā rājā sacivaiḥ parivāritaḥ |",
    "sf73:12": "samaṁtād anuśāstīmāṁ sāgarāṁtāṁ vasundharām ||",
    "sf73:13": "tathā vijīta saṁgrāmaṁ sārthavāham anuttaram |",
    "sf73:14": "upāsate śravakāstvā traividyā-mṛtyu-hāyina ||",
    "sf73:15": "putrās te sarva evaite plāvī hy atra na vidyate |",
    "sf73:16": "hartāraṁ sarva śalyānāṁ vande tvāditya-bāndhavam ||",
    "sf73:17": "idam avocad bhagavān āptamanasas te bhikṣavo bhagavato bhāṣitam abhyanandaṁ ||",
    "sf73:18": "pravāraṇa sūtraṁ ||"
}