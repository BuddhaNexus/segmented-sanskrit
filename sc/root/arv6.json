    "arv6:3": "Arthaviniścayasūtram",
    "arv6:4": "",
    "arv6:5": "6. Catvāry-Ārya-Satyāni",
    "arv6:6": "",
    "arv6:7": "Tatra, (bhikṣavaḥ,) katamāni catvāry-ārya-satyāni?",
    "arv6:8": "[Tad-yathā:]",
    "arv6:9": "",
    "arv6:10": "Duḥkham-ārya-satyam |",
    "arv6:11": "duḥkha-samudayam-ārya-satyam |",
    "arv6:12": "duḥkha-nirodham-ārya-satyam |",
    "arv6:13": "duḥkha-nirodha-gāminī-pratipad-ārya-satyam ||",
    "arv6:14": "",
    "arv6:15": "6.1 Duḥkham-Ārya-Satyaṁ",
    "arv6:16": "Duḥkham-ārya-satyaṁ katamat?",
    "arv6:17": "[Tad-yathā:]",
    "arv6:18": "Jātir-duḥkham | jarā duḥkham | vyādhir-duḥkham | maraṇaṁ duḥkham | priya-viyogo duḥkham | apriya-saṁyogo duḥkham | yada-pīcchan paryeṣyamāṇo na labhate tad-api duḥkham | saṁkṣipteṇa pañcopādāna-skandhā duḥkham ||",
    "arv6:19": "Idam-ucyate duḥkham-ārya-satyam ||",
    "arv6:20": "6.2 Duḥkha-Samudayam-Ārya-Satyaṁ",
    "arv6:21": "Duḥkha-samudayam-ārya-satyaṁ katamat?",
    "arv6:22": "Tad-yathā:",
    "arv6:23": "Tṛṣṇā paunarbhavikī | nandīrāgasahagatā tatratatrābhinandinī ||",
    "arv6:24": "Idam-ucyate duḥkha-samudayam-ārya-satyam ||",
    "arv6:25": "6.3 Duḥkha-Nirodham-Ārya-Satyam",
    "arv6:26": "Duḥkha-nirodham-ārya-satyam katamat?",
    "arv6:27": "Yad-asyā eva tṛṣṇāyāḥ paunar-bhavikyā | nandī-rāga-sahagatāyās-tatra-tatrābhinandinyā | aśeṣataḥ prahāṇaṁ, pratiniḥsargo, vyantībhāvaḥ | kṣayo virāgo nirodho vyupaśamo ’staṁgamaḥ ||",
    "arv6:28": "Idam-ucyate duḥkha-nirodham-ārya-satyam ||",
    "arv6:29": "6.4 Duḥkha-Nirodha-Gāminī-Pratipadad-Ārya-Satyaṁ",
    "arv6:30": "Tatra duḥkha-nirodha-gāminī-pratipad-ārya-satyaṁ katamat?",
    "arv6:31": "Ayam-eva samyag-dṛṣṭyādi-r-āryāṣṭāṅgo mārgaḥ ||",
    "arv6:32": "Tad-yathā:",
    "arv6:33": "",
    "arv6:34": "Samyag-dṛṣṭiḥ |",
    "arv6:35": "samyak-saṁkalpaḥ |",
    "arv6:36": "samyag-vāk |",
    "arv6:37": "samyak-karmāntaḥ |",
    "arv6:38": "samyag-ājīvaḥ |",
    "arv6:39": "samyag-vyāyāmaḥ |",
    "arv6:40": "samyak-smṛtiḥ |",
    "arv6:41": "samyak-samādhir-iti ||",
    "arv6:42": "",
    "arv6:43": "Ayam-ucyate duḥkhanirodhagāmanīpratipadārya-satyam ||",
    "arv6:44": "Imāni bhikṣavaś-catvāry-āryāsatyam ||"
}