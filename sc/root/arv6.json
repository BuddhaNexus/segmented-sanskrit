{
    "arv6:0": "Arthaviniścayasūtram",
    "arv6:1": "6. Catvāry-Ārya-Satyāni",
    "arv6:2": "Tatra, (bhikṣavaḥ,) katamāni catvāry-ārya-satyāni?",
    "arv6:3": "[Tad-yathā:]",
    "arv6:4": "Duḥkham-ārya-satyam |",
    "arv6:5": "duḥkha-samudayam-ārya-satyam |",
    "arv6:6": "duḥkha-nirodham-ārya-satyam |",
    "arv6:7": "duḥkha-nirodha-gāminī-pratipad-ārya-satyam ||",
    "arv6:8": "6.1 Duḥkham-Ārya-Satyaṁ",
    "arv6:9": "Duḥkham-ārya-satyaṁ katamat?",
    "arv6:10": "[Tad-yathā:]",
    "arv6:11": "Jātir-duḥkham | jarā duḥkham | vyādhir-duḥkham | maraṇaṁ duḥkham | priya-viyogo duḥkham | apriya-saṁyogo duḥkham | yada-pīcchan paryeṣyamāṇo na labhate tad-api duḥkham | saṁkṣipteṇa pañcopādāna-skandhā duḥkham ||",
    "arv6:12": "Idam-ucyate duḥkham-ārya-satyam ||",
    "arv6:13": "6.2 Duḥkha-Samudayam-Ārya-Satyaṁ",
    "arv6:14": "Duḥkha-samudayam-ārya-satyaṁ katamat?",
    "arv6:15": "Tad-yathā:",
    "arv6:16": "Tṛṣṇā paunarbhavikī | nandīrāgasahagatā tatratatrābhinandinī ||",
    "arv6:17": "Idam-ucyate duḥkha-samudayam-ārya-satyam ||",
    "arv6:18": "6.3 Duḥkha-Nirodham-Ārya-Satyam",
    "arv6:19": "Duḥkha-nirodham-ārya-satyam katamat?",
    "arv6:20": "Yad-asyā eva tṛṣṇāyāḥ paunar-bhavikyā | nandī-rāga-sahagatāyās-tatra-tatrābhinandinyā | aśeṣataḥ prahāṇaṁ, pratiniḥsargo, vyantībhāvaḥ | kṣayo virāgo nirodho vyupaśamo ’staṁgamaḥ ||",
    "arv6:21": "Idam-ucyate duḥkha-nirodham-ārya-satyam ||",
    "arv6:22": "6.4 Duḥkha-Nirodha-Gāminī-Pratipadad-Ārya-Satyaṁ",
    "arv6:23": "Tatra duḥkha-nirodha-gāminī-pratipad-ārya-satyaṁ katamat?",
    "arv6:24": "Ayam-eva samyag-dṛṣṭyādi-r-āryāṣṭāṅgo mārgaḥ ||",
    "arv6:25": "Tad-yathā:",
    "arv6:26": "Samyag-dṛṣṭiḥ |",
    "arv6:27": "samyak-saṁkalpaḥ |",
    "arv6:28": "samyag-vāk |",
    "arv6:29": "samyak-karmāntaḥ |",
    "arv6:30": "samyag-ājīvaḥ |",
    "arv6:31": "samyag-vyāyāmaḥ |",
    "arv6:32": "samyak-smṛtiḥ |",
    "arv6:33": "samyak-samādhir-iti ||",
    "arv6:34": "Ayam-ucyate duḥkhanirodhagāmanīpratipadārya-satyam ||",
    "arv6:35": "Imāni bhikṣavaś-catvāry-āryāsatyam ||"
}