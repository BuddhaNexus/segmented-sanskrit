{
    "uvs19:0": "Udānavarga de Subaši",
    "uvs19:1": "19. Aśvavarga",
    "uvs19:2": "aśvo yathā bhadra kaśābhispṛṣṭaḥ",
    "uvs19:3": "ātapinaḥ . . . . . . .",
    "uvs19:4": "śraddhāya śīelna ca vīryyavāṁs ta-",
    "uvs19:5": "thā",
    "uvs19:6": "samādhinā dharmma-viniścayena |",
    "uvs19:7": "sampanna-vidyā-caraṇām pratismṛtām",
    "uvs19:8": "prahāsyate sarvva-bhavāni tādṛśāḥ",
    "uvs19:9": ". . . . . . . . . . .",
    "uvs19:10": "ātāpinaḥ saṁvijitaś carantaḥ |",
    "uvs19:11": "śraddhāya sīlena ca vīryyavaṁs tathā",
    "uvs19:12": "samādhinā dharmma-viniścayena ca |",
    "uvs19:13": "te kṣānti-sauratya-samāhitendriyāḥ",
    "uvs19:14": "śrutasya . . . . . . . . .",
    "uvs19:15": ". . . . . samatāṇ gatāni",
    "uvs19:16": "aśvo yathā sārathinā sudāntaḥ |",
    "uvs19:17": "prahīṇa-krodhasya-m-anāsravasya",
    "uvs19:18": "devāpi tasya smṛhayanti tādṛṇaḥ",
    "uvs19:19": ". . . . &#160;&#160; . . . . |",
    "uvs19:20": "appramattaḥ pramatteṣu",
    "uvs19:21": "abalāśvan va bhadraśva",
    "uvs19:22": "hitvā yānti sumedhasaḥ",
    "uvs19:23": "hirī-niṣevī puruṣaḥ",
    "uvs19:24": "prajñavāṁ susamāhitaḥ |",
    "uvs19:25": "sarvva-pāpan apohati",
    "uvs19:26": "bhadraḥ aśva kaśām iva",
    "uvs19:27": "dānto . . &#160;&#160; . . . .",
    "uvs19:28": ". . . . &#160;&#160; . . . . |",
    "uvs19:29": "dantaḥ śreṣṭo manuṣyāṇāṁ",
    "uvs19:30": "yo ’tivākyaṁ titīkṣati",
    "uvs19:31": "yo aśvataraṁ damayed",
    "uvs19:32": "ajāneyan va saindhavaṁ |",
    "uvs19:33": "kuñjaraṁ vā mahā-nāgaṁ",
    "uvs19:34": "atma-dantas tato vara",
    "uvs19:35": "na hi . . &#160;&#160; . . . .",
    "uvs19:36": ". . . . &#160;&#160; . . . . |",
    "uvs19:37": "yathātmanā sudāntena",
    "uvs19:38": "dānto dāntena gacchati",
    "uvs19:39": "atmānam eva damayed",
    "uvs19:40": "āśva bhadram va sārathiḥ |",
    "uvs19:41": "atmā hi ātmanaṁ dāntạh",
    "uvs19:42": "smṛtimaṁ duḥkha-pāragaḥ",
    "uvs19:43": ". . . . &#160;&#160; . . . .",
    "uvs19:44": ". . . . &#160;&#160; . . gatiḥ |",
    "uvs19:45": "tasmāt sanyamayātmānaṁ",
    "uvs19:46": "aśva bhadraṁ va vānija",
    "uvs19:47": "aśva-varga ekūna-vīśati | | * | |"
}