{
    "arv16:0": "",
    "arv16:1": "",
    "arv16:2": "",
    "arv16:3": "Arthaviniścayasūtram",
    "arv16:4": "",
    "arv16:5": "16. Pañcendriyāṇi",
    "arv16:6": "",
    "arv16:7": "Tatra bhikṣavaḥ katamāni pañcendriyāṇi?",
    "arv16:8": "Yad-uta:",
    "arv16:9": "",
    "arv16:10": "Śraddhendriyam |",
    "arv16:11": "vīryendriyam |",
    "arv16:12": "smṛtīndriyam |",
    "arv16:13": "samādhīndriyam |",
    "arv16:14": "prajñendriyam ||",
    "arv16:15": "",
    "arv16:16": "",
    "arv16:17": "",
    "arv16:18": "Tatra katamat śraddhendriyam?",
    "arv16:19": "Yayā śraddhayā caturo dharmān śraddadhāti ||",
    "arv16:20": "Katamāṁś-caturaḥ?",
    "arv16:21": "",
    "arv16:22": "Saṁsārāvacarāṁ laukikīṁ samyag-dṛṣṭiṁ śraddadhāti |",
    "arv16:23": "sa karma-vipāka-pratiśaraṇo bhavati |",
    "arv16:24": "yad-yad-eva karma kariṣyāmi kalyāṇaṁ vā pāpakaṁ vā | tasyaiva karmaṇo vipākaṁ pratisaṁvedayiṣyāmi |",
    "arv16:25": "sa jīvita-hetor-api pāpakaṁ karma nābhisaṁskaroti ||",
    "arv16:26": "",
    "arv16:27": "Idam-ucyate śraddhendriyam ||",
    "arv16:28": "",
    "arv16:29": "",
    "arv16:30": "Tatra katamad vīryendriyam?",
    "arv16:31": "Yān dharmān śraddhendriyeṇa śraddadhāti | tān dharmān vīryendriyeṇa samudānayati ||",
    "arv16:32": "Idam-ucyate vīryendriyam ||",
    "arv16:33": "",
    "arv16:34": "",
    "arv16:35": "Tatra katamat smṛtīndriyam?",
    "arv16:36": "Yān dharmān vīryendriyeṇa samudānayati | tān dharmān smṛtīndriyeṇa na vipraṇāśayati ||",
    "arv16:37": "Idam-ucyate smṛtīndriyam ||",
    "arv16:38": "",
    "arv16:39": "",
    "arv16:40": "Tatra katamat samādhīndriyam?",
    "arv16:41": "Yān dharmān smṛtīndriyeṇa na vipraṇāśayati | tān dharmān samādhīndriyeṇa ekāgrīkaroti ||",
    "arv16:42": "Idam-ucyate samādhīndriyam ||",
    "arv16:43": "",
    "arv16:44": "",
    "arv16:45": "Tatra katamat prajñendriyam?",
    "arv16:46": "Yān dharmān samādhīndriyeṇa ekāgrīkaroti | tān dharmān prajñendriyeṇa pratividhyate sa teṣu dharmeṣu pratyavekṣaṇa-jātīyo bhavati ||",
    "arv16:47": "Idam-ucyate prajñendriyam ||",
    "arv16:48": "",
    "arv16:49": "",
    "arv16:50": "Imāni bhikṣavaḥ pañcendriyāṇi ||"
}