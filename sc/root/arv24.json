{
    "arv24:0": "Arthaviniścayasūtram",
    "arv24:1": "24. Catasraḥ Pratisaṁvidaḥ",
    "arv24:2": "Tatra katamās-Tathāgatasya catasraḥ pratisaṁvidaḥ?",
    "arv24:3": "Tad-yathā:",
    "arv24:4": "Artha-pratisaṁvit |",
    "arv24:5": "dharma-pratisaṁvit |",
    "arv24:6": "nirukti-pratisaṁvit |",
    "arv24:7": "pratibhāna-pratisaṁvic-ca ||",
    "arv24:8": "Artha-pratisaṁvit katamā?",
    "arv24:9": "Yad-uta, paramārthe yad-avaivartya-jñānam ||",
    "arv24:10": "Dharma-pratisaṁvit katamā?",
    "arv24:11": "Anāsraveṣu dharmeṣu yad-avaivartya-jñānam ||",
    "arv24:12": "Nirukti-pratisaṁvit katamā?",
    "arv24:13": "Abhivyāhāre yad-avaivartya-jñānam ||",
    "arv24:14": "Pratibhāna-pratisaṁvic katamā?",
    "arv24:15": "Yukta-muktam-abhilāpitāyāṁ:",
    "arv24:16": "samādhivaśo saṁprakhyāneṣu yad-avaivartya-jñānam ||",
    "arv24:17": "Imāś-catasraḥ pratisaṁvidaḥ ||"
}