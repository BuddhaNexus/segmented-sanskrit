{
    "arv25:0": "Arthaviniścayasūtram",
    "arv25:1": "25. Aṣṭādaśa Āveṇikā Buddha-Dharmāḥ",
    "arv25:2": "Tatra katame ’ṣṭā-daśāveṇikā Buddha-dharmāḥ?",
    "arv25:3": "Yad-uta:",
    "arv25:4": "Nāsti Tathāgatasya skhalitam |",
    "arv25:5": "nāsti ravitam |",
    "arv25:6": "nāsti muṣita-smṛtitā |",
    "arv25:7": "nāsty-asamāhitaṁ cittam |",
    "arv25:8": "nāsti nānātva-saṁjñā |",
    "arv25:9": "nāsty-apratisaṁkhyāyopekṣā |",
    "arv25:10": "nāsti chandasya hāniḥ |",
    "arv25:11": "nāsti vīryasya hāniḥ |",
    "arv25:12": "nāsti smṛter-hāniḥ |",
    "arv25:13": "nāsti samādher-hāniḥ |",
    "arv25:14": "nāsti prajñāyā hāniḥ |",
    "arv25:15": "nāsti vimukter-hāniḥ |",
    "arv25:16": "atīte ’dhvani asaṅgam-apratihataṁ jñāna-darśanam |",
    "arv25:17": "anāgate ’dhvani asaṅgam-apratihataṁ jñāna-darśanam |",
    "arv25:18": "pratyutpanne ’dhvani asaṅgam-apratihataṁ jñāna-darśanam |",
    "arv25:19": "sarva-kāya-karma jñāna-pūrvaṅgamaṁ jñānānuparivartam |",
    "arv25:20": "sarva-vāk-karma jñāna-pūrvaṅgamaṁ jñānānuparivartam |",
    "arv25:21": "sarva-manaḥ-karma jñāna-pūrvaṅgamaṁ jñānānuparivartaṁ ||",
    "arv25:22": "Ime aṣṭā-daśāveṇikā Buddha-dharmāḥ ||"
}