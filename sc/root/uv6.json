{
    "uv6:0": "Udānavarga",
    "uv6:1": "6. Śīlavarga",
    "uv6:2": "− − − − । ⏑ − − − ।। − ⏑ − − । ⏑ − ⏑ −",
    "uv6:3": "śīlaṁ rakṣeta medhāvī prārthayaṁ vai sukhatrayam ।",
    "uv6:4": "⏑ − − − । ⏑ − − − ।। − − − − । ⏑ − ⏑ −",
    "uv6:5": "praśaṁsā vittalābhaṁ ca pretya svarge ca modanam ।।",
    "uv6:6": "− − − − । ⏑ − − − ।। − − − − । ⏑ − ⏑ −",
    "uv6:7": "sthānāny etāni saṁpaśyaṁ śīlaṁ rakṣeta paṇḍitaḥ ।",
    "uv6:8": "− − − ⏑ । ⏑ − − − ।। ⏑ − − ⏑ । ⏑ − ⏑ −",
    "uv6:9": "āryo darśanasaṁpannaḥ sa loke labhate śivam ।।",
    "uv6:10": "⏑ − − ⏑ । ⏑ − − − ।। − − ⏑ ⏑ । ⏑ − ⏑ −",
    "uv6:11": "sukhaṁ śīlasamādānaṁ kāyo na paridahyate ।",
    "uv6:12": "⏑ − ⏑ − । − ⏑ ⏑ − ।। ⏑ ⏑ − − । ⏑ − ⏑ − bhavipulā",
    "uv6:13": "sukhaṁ ca rātrau svapati pratibuddhaś ca nandati ।।",
    "uv6:14": "− − − − । ⏑ − − − ।। − − − − । ⏑ − ⏑ −",
    "uv6:15": "śīlaṁ yāvaj jarā sādhu śraddhā sādhu pratiṣṭhitā ।",
    "uv6:16": "− − ⏑ − । − , − − − ।। − − − − । ⏑ − ⏑ − mavipulā",
    "uv6:17": "prajñā narāṇāṁ ratnaṁ vai puṇyaṁ coraiḥ sudurharam ।।",
    "uv6:18": "− − − − । ⏑ − − − ।। − − − − । ⏑ − ⏑ −",
    "uv6:19": "kṛtvā puṇyāni saprajño datvā dānāni śīlavān ।",
    "uv6:20": "⏑ ⏑ − ⏑ । ⏑ − − − ।। ⏑ − ⏑ ⏑ । ⏑ − ⏑ −",
    "uv6:21": "iha cātha paratrāsau sukhaṁ samadhigacchati ।।",
    "uv6:22": "− − ⏑ − । ⏑ − − − ।। − ⏑ − ⏑ । ⏑ − ⏑ −",
    "uv6:23": "śīle pratiṣṭhito bhikṣur indriyaiś ca susaṁvṛtaḥ ।",
    "uv6:24": "− ⏑ − − । ⏑ − − − ।। − − − ⏑ । ⏑ − ⏑ −",
    "uv6:25": "bhojane cāpi mātrajño yukto jāgarikāsu ca ।।",
    "uv6:26": "⏑ ⏑ − − । ⏑ − − − ।। ⏑ − − ⏑ । ⏑ − ⏑ −",
    "uv6:27": "viharann evam ātāpī hy ahorātram atandritaḥ ।",
    "uv6:28": "⏑ − − ⏑ । ⏑ − − − ।। − − − − । ⏑ − ⏑ −",
    "uv6:29": "abhavyaḥ parihāṇāya nirvāṇasyaiva so ’ntike ।।",
    "uv6:30": "− − ⏑ − । ⏑ − − − ।। − − − − । ⏑ − ⏑ −",
    "uv6:31": "śīle pratiṣṭhito bhikṣuś cittaṁ prajñāṁ ca bhāvayet ।",
    "uv6:32": "− − − ⏑ । ⏑ − − − ।। − ⏑ − − । ⏑ − ⏑ −",
    "uv6:33": "ātāpī nipako nityaṁ prāpnuyād duḥkhasaṁkṣayam ।।",
    "uv6:34": "− − ⏑ ⏑ । ⏑ − − − ।। ⏑ − − ⏑ । ⏑ − ⏑ −",
    "uv6:35": "tasmāt satataśīlī syāt samādher anurakṣakaḥ ।",
    "uv6:36": "⏑ − ⏑ − । − , − − − ।। − ⏑ − − । ⏑ − ⏑ − mavipulā",
    "uv6:37": "vipaśyanāyāṁ śikṣec ca saṁprajānapratismṛtaḥ ।।",
    "uv6:38": "⏑ ⏑ − − । ⏑ − − − ।। − ⏑ − − । ⏑ − ⏑ −",
    "uv6:39": "sa tu vikṣīnasaṁyogaḥ kṣīṇamāno niraupadhiḥ ।",
    "uv6:40": "− − ⏑ − । − , − − − ।। − − − − । ⏑ − ⏑ − mavipulā",
    "uv6:41": "kāyasya bhedāt saprajñaḥ saṁkhyān nopaiti nirvṛtaḥ ।।",
    "uv6:42": "− − ⏑ − । − , − − − ।। − − − − । ⏑ − ⏑ − mavipulā",
    "uv6:43": "śīlaṁ samādhiḥ prajñā ca yasya hy ete subhāvitāḥ ।",
    "uv6:44": "− − ⏑ − । − ⏑ ⏑ − ।। ⏑ − − − । ⏑ − ⏑ − bhavipulā",
    "uv6:45": "so ’tyantaniṣṭho vimalas tv aśokaḥ kṣīṇasaṁbhavaḥ ।।",
    "uv6:46": "− − ⏑ − । − ⏑ ⏑ − ।। − − − − । ⏑ − ⏑ − bhavipulā",
    "uv6:47": "saṅgāt pramukto hy asita ājñātāvī niraupadhiḥ ।",
    "uv6:48": "⏑ − − ⏑ , । − ⏑ ⏑ ⏑ − ।। − − − − । ⏑ − ⏑ − ravipulā",
    "uv6:49": "atikramya māraviṣayam ādityo vā virocate ।।",
    "uv6:50": "− ⏑ − − । ⏑ − − − ।। − ⏑ − ⏑ । ⏑ − ⏑ −",
    "uv6:51": "uddhatasya pramattasya bhikṣuṇo bahirātmanaḥ ।",
    "uv6:52": "− − ⏑ − । − , − − − ।। − ⏑ − − । ⏑ − ⏑ − mavipulā",
    "uv6:53": "śīlaṁ samādhiḥ prajñā ca pāripūriṁ na gacchati ।।",
    "uv6:54": "− ⏑ − − । ⏑ − ⏑ − ।। ⏑ ⏑ − − । ⏑ − ⏑ − Anuṣṭubh",
    "uv6:55": "channam evābhivarṣati vivṛtaṁ nābhivarṣati ।",
    "uv6:56": "− − ⏑ − । − ⏑ ⏑ − ।। − − − − । ⏑ − ⏑ − bhavipulā",
    "uv6:57": "tasmād dhi cchannaṁ vivared evaṁ taṁ nābhivarṣati ।।",
    "uv6:58": "− − ⏑ − । − , − − − ।। ⏑ − − − । ⏑ − ⏑ − mavipulā",
    "uv6:59": "etad dhi dṛṣṭvā śikṣeta sadā śīleṣu paṇḍitaḥ ।",
    "uv6:60": "− − ⏑ ⏑ । ⏑ − − − ।। − ⏑ − ⏑ । ⏑ − ⏑ −",
    "uv6:61": "nirvāṇagamanaṁ mārgaṁ kṣipram eva viśodhayet ।।",
    "uv6:62": "⏑ − ⏑ − । − , ⏑ ⏑ । − ⏑ − − Triṣṭubh",
    "uv6:63": "na puṣpagandhaḥ prativātam eti",
    "uv6:64": "⏑ − ⏑ − , । ⏑ ⏑ − । − ⏑ − −",
    "uv6:65": "na vāhnijāt tagarac candanād vā ।",
    "uv6:66": "⏑ − ⏑ − । − , ⏑ ⏑ । − ⏑ − −",
    "uv6:67": "satāṁ tu gandhaḥ prativātam eti",
    "uv6:68": "− − ⏑ − , । − ⏑ ⏑ । − ⏑ − −",
    "uv6:69": "sarvā diśaḥ satpuruṣaḥ pravāti ।।",
    "uv6:70": "⏑ ⏑ − − । ⏑ − − − ।। − ⏑ − − । ⏑ − ⏑ −",
    "uv6:71": "tagarāc candanāc cāpi vārṣikāyās tathotpalāt ।",
    "uv6:72": "− − − − । ⏑ − − − ।। − ⏑ − − । ⏑ − ⏑ −",
    "uv6:73": "etebhyo gandhajātebhyaḥ śīlagandhas tv anuttaraḥ ।।",
    "uv6:74": "− ⏑ − − । ⏑ − − − ।। − − ⏑ ⏑ । ⏑ − ⏑ −",
    "uv6:75": "alpamātro hy ayaṁ gandho yo ’yaṁ tagaracandanāt ।",
    "uv6:76": "− ⏑ − ⏑ । ⏑ − − − ।। − ⏑ − − । ⏑ − ⏑ −",
    "uv6:77": "yas tu śīlavatāṁ gandho vāti deveṣv apīha saḥ ।।",
    "uv6:78": "− − ⏑ − । ⏑ − − − ।। − ⏑ − ⏑ । ⏑ − ⏑ −",
    "uv6:79": "teṣāṁ viśuddhaśīlānām apramādavihāriṇām ।",
    "uv6:80": "− ⏑ − − । ⏑ − − − ।। − − − − । ⏑ − ⏑ −",
    "uv6:81": "samyagājñāvimuktānāṁ māro mārgaṁ na vindati ।।",
    "uv6:82": "− − − ⏑ । ⏑ − − − ।। − ⏑ − − । ⏑ − ⏑ −",
    "uv6:83": "eṣa kṣemagamo mārga eṣa mārgo viśuddhaye ।",
    "uv6:84": "⏑ ⏑ − ⏑ − । ⏑ − − − ।। − ⏑ − − । ⏑ − ⏑ −",
    "uv6:85": "pratipannakāḥ prahāsyanti dhyāyino mārabandhanam ।।",
    "uv6:86": "।। śīlavargaḥ 6 ।। ।।"
}