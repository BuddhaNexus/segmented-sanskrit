{
    "uv13:0": "Udānavarga",
    "uv13:1": "13. Satkāravarga",
    "uv13:2": "⏑ − − ⏑ । ⏑ − − − ।। ⏑ − − − । ⏑ − ⏑ −",
    "uv13:3": "phalaṁ vai kadaliṁ hanti phalaṁ veṇuṁ phalaṁ naḍam ।",
    "uv13:4": "− − − − ⏑ । ⏑ − − − ।। ⏑ − − ⏑ । ⏑ − ⏑ − 9 syllables",
    "uv13:5": "satkāraḥ kāpuruṣaṁ hanti svagarbho ’śvatarīṁ yathā ।।",
    "uv13:6": "− ⏑ − − । ⏑ − − − ।। − − ⏑ ⏑ । ⏑ − ⏑ −",
    "uv13:7": "yāvad eva hy anarthāya jñāto bhavati bāliśaḥ ।",
    "uv13:8": "− ⏑ − − । ⏑ − − − ।। − − − − । ⏑ − ⏑ −",
    "uv13:9": "hanti bālasya śuklāṁśaṁ mūrdhānaṁ cāsya pātayet ।।",
    "uv13:10": "⏑ − − − । ⏑ − − − ।। − − − − । ⏑ − ⏑ −",
    "uv13:11": "asanto lābham icchanti satkāraṁ caiva bhikṣuṣu ।",
    "uv13:12": "− − − ⏑ । ⏑ − − − ।। − − ⏑ ⏑ । ⏑ − ⏑ −",
    "uv13:13": "āvāseṣu ca mātsaryaṁ pūjāṁ parakuleṣu ca ।।",
    "uv13:14": "− − ⏑ − । − , − − − ।। ⏑ − − ⏑ । ⏑ − ⏑ − mavipulā",
    "uv13:15": "mām eva nityaṁ jānīyur gṛhī pravrajitas tathā ।",
    "uv13:16": "⏑ − ⏑ ⏑ । ⏑ − − − ।। − − − − । ⏑ − ⏑ −",
    "uv13:17": "mama prativaśāś ca syuḥ kṛtyākṛtyeṣu keṣu cit ।।",
    "uv13:18": "⏑ ⏑ − − । ⏑ − − − ।। − − − − । ⏑ − ⏑ −",
    "uv13:19": "iti bālasya saṁkalpā icchāmānābhivardhakāḥ ।",
    "uv13:20": "− − ⏑ − । − ⏑ ⏑ − ।। − − − − । ⏑ − ⏑ − bhavipulā",
    "uv13:21": "anyā hi lābhopaniṣad anyā nirvāṇagāminī ।।",
    "uv13:22": "− − − − । ⏑ − − − ।। − − − − । ⏑ − ⏑ −",
    "uv13:23": "etaj jñātvā yathābhūtaṁ buddhānāṁ śrāvakaḥ sadā ।",
    "uv13:24": "− − − − । ⏑ − − − ।। ⏑ − − ⏑ । ⏑ − ⏑ −",
    "uv13:25": "satkāraṁ nābhinandeta vivekaṁ anubṛṁhayet ।।",
    "uv13:26": "− − ⏑ − । − , − − − ।। − − − ⏑ । ⏑ − ⏑ − mavipulā",
    "uv13:27": "na vyāyamente sarvatra nānyeṣāṁ puruṣo bhavet ।",
    "uv13:28": "− − − − । ⏑ − − − ।। − − ⏑ ⏑ । ⏑ − ⏑ −",
    "uv13:29": "nānyāṁ niḥśritya jīveta dharmeṇa na vaṇik caret ।।",
    "uv13:30": "⏑ − − − । ⏑ − − − ।। − − − ⏑ । ⏑ − ⏑ −",
    "uv13:31": "svalābhaṁ nāvamanyeta nānyeṣāṁ spṛhako bhavet ।",
    "uv13:32": "− − − ⏑ । ⏑ − − − ।। ⏑ − − − । ⏑ − ⏑ −",
    "uv13:33": "anyeṣāṁ spṛhako bhikṣuḥ samādhiṁ nādhigacchati ।।",
    "uv13:34": "⏑ − − ⏑ । ⏑ − − − ।। ⏑ − − − । ⏑ − ⏑ −",
    "uv13:35": "sukhaṁ jīvitum icchec cec chramaṇyārtheṣv avekṣavān ।",
    "uv13:36": "⏑ − − ⏑ । ⏑ − − − ।। − − ⏑ ⏑ । ⏑ − ⏑ −",
    "uv13:37": "ahir mūṣakadurgaṁ vā seveta śayanāsanam ।।",
    "uv13:38": "⏑ − − ⏑ । ⏑ − − − ।। ⏑ − − − । ⏑ − ⏑ −",
    "uv13:39": "sukhaṁ jīvitum icchec cec chramaṇyārtheṣv avekṣavān ।",
    "uv13:40": "⏑ ⏑ − ⏑ − । ⏑ − − − ।। − ⏑ − − । ⏑ − ⏑ −",
    "uv13:41": "itaretareṇa saṁtuṣyed ekadharmaṁ ca bhāvayet ।।",
    "uv13:42": "⏑ − − ⏑ । ⏑ − − − ।। ⏑ − − − । ⏑ − ⏑ −",
    "uv13:43": "sukhaṁ jīvitum icchec cec chramaṇyārtheṣv avekṣavān ।",
    "uv13:44": "− ⏑ − − । ⏑ − − − ।। − ⏑ − − । ⏑ − ⏑ −",
    "uv13:45": "sāṁghikaṁ nāvamanyeta cīvaraṁ pānabhojanam ।।",
    "uv13:46": "− − − − । ⏑ − − − ।। − − ⏑ ⏑ । ⏑ − ⏑ −",
    "uv13:47": "alpajñāto ’pi ced bhavati śīleṣu susamāhitaḥ ।",
    "uv13:48": "− − − − । ⏑ − − − ।। − − − ⏑ । ⏑ − ⏑ −",
    "uv13:49": "vidvāṁsas taṁ praśaṁsanti śuddhājīvam atandritam ।।",
    "uv13:50": "− − − − । ⏑ − − − ।। − ⏑ − − । ⏑ − ⏑ −",
    "uv13:51": "traividyaḥ syāt sa ced bhikṣur mṛtyuhantā nirāsravaḥ ।",
    "uv13:52": "− − − ⏑ । ⏑ − − − ।। ⏑ ⏑ − − । ⏑ − ⏑ −",
    "uv13:53": "alpajñātam iti jñātvā hy avajānanty ajānakāḥ ।। [i]",
    "uv13:54": "⏑ − ⏑ ⏑ । ⏑ − − − ।। − ⏑ − − । ⏑ − ⏑ −",
    "uv13:55": "sa ced bhavati traividyo mṛtyuhāyī nirāsravaḥ ।",
    "uv13:56": "− − − − । ⏑ ⏑ ⏑ − ।। ⏑ ⏑ − − । ⏑ − ⏑ − navipulā",
    "uv13:57": "jñātvālpajñāta iti tam avajānanty ajānakāḥ ।। [ii]",
    "uv13:58": "⏑ − ⏑ − । ⏑ − − − ।। − − ⏑ ⏑ । ⏑ − ⏑ −",
    "uv13:59": "sa cet tv ihānnapānasya lābhī bhavati pudgalaḥ ।",
    "uv13:60": "− ⏑ − − । ⏑ − − − ।। ⏑ − − − । ⏑ − ⏑ −",
    "uv13:61": "pāpadharmāpi ced bhavati sa teṣāṁ bhavati pūjitaḥ ।।",
    "uv13:62": "⏑ − ⏑ − । − ⏑ ⏑ − ।। − − − ⏑ । ⏑ − ⏑ − bhavipulā",
    "uv13:63": "bahūn amitrāṁ labhate saṁghāṭīpravṛtaḥ sadā ।",
    "uv13:64": "− − − − । ⏑ − − − ।। − ⏑ − − । ⏑ − ⏑ −",
    "uv13:65": "lābhī yo hy annapānasya vastraśayyāsanasya ca ।।",
    "uv13:66": "− ⏑ − − । ⏑ − − − ।। − − − ⏑ । ⏑ − ⏑ −",
    "uv13:67": "etad ādīnavaṁ jñātvā satkāreṣu mahābhayam ।",
    "uv13:68": "− − − − । ⏑ − ⏑ − ।। ⏑ − − − । ⏑ − ⏑ − Anuṣṭubh",
    "uv13:69": "alpajñāto hy anutsukaḥ smṛto bhikṣuḥ parivrajet ।।",
    "uv13:70": "− ⏑ ⏑ ⏑ ⏑ । − ⏑ − ⏑ − Vaitālīya",
    "uv13:71": "nāyam anaśanena jīvate",
    "uv13:72": "− − − ⏑ ⏑ । − ⏑ − ⏑ −",
    "uv13:73": "nāhāro hṛdayasya śāntaye ।",
    "uv13:74": "− − − ⏑ ⏑ । − ⏑ − ⏑ −",
    "uv13:75": "āhāraḥ sthitaye tu vidyate",
    "uv13:76": "− − − ⏑ ⏑ । − ⏑ − ⏑ −",
    "uv13:77": "taj jñātvā hi careta eṣaṇām ।।",
    "uv13:78": "− − ⏑ ⏑ । − ⏑ − ⏑ − Vaitālīya",
    "uv13:79": "paṅkas tv iti yo hi vindate",
    "uv13:80": "− − − ⏑ ⏑ । − ⏑ − ⏑ −",
    "uv13:81": "nityaṁ vandanamānanā kule ।",
    "uv13:82": "− − − । − ⏑ − ⏑ −",
    "uv13:83": "sūkṣmaḥ śalyo duruddharaḥ",
    "uv13:84": "− − − − ⏑ ⏑ । − ⏑ − ⏑ −",
    "uv13:85": "satkāraḥ kāpuruṣeṇa dustyajaḥ ।।",
    "uv13:86": "।। satkāravargaḥ 13 ।। ।।"
}