{
    "arv4:0": "Arthaviniścayasūtram",
    "arv4:1": "4. Dvā-Daśāyatanāni",
    "arv4:2": "Tatra bhikṣavaḥ katamāni dvā-daśāyatanāni?",
    "arv4:3": "Tad-yathā:",
    "arv4:4": "Cakṣur-ādhyātmikam-āyatanam |",
    "arv4:5": "rūpaṁ bāhyam-āyatanam |",
    "arv4:6": "śrotram-ādhyātmikam-āyatanam |",
    "arv4:7": "śabdo bāhyam-āyatanam |",
    "arv4:8": "ghrāṇām-ādhyātmikam-āyatanam |",
    "arv4:9": "gandho bāhyam-āyatanam |",
    "arv4:10": "jihvā ādhyātmikam-āyatanam |",
    "arv4:11": "raso bāhyam-āyatanam |",
    "arv4:12": "kāya ādhyātmikam-āyatanam |",
    "arv4:13": "sparśo bāhyam-āyatanam |",
    "arv4:14": "mana ādhyātmikam-āyatanam |",
    "arv4:15": "dharmo bāhyam-āyatanam ||",
    "arv4:16": "Imāni bhikṣava ucyante dvā-daśāyatanāni ||"
}