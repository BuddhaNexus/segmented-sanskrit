{
    "arv1:0": "Arthaviniścayasūtram",
    "arv1:1": "Outline",
    "arv1:2": "Namo Buddhāya!",
    "arv1:3": "Evaṁ mayā śrutam:",
    "arv1:4": "ekasmin samaye Bhagavān Śrāvastyāṁ viharati sma | Purvārāme Mṛgāra-mātuḥ prāsāde | mahatā bhikṣu-saṅghena sārdham-ardha-trayodaśabhir-bhikṣu-śātaiḥ ||",
    "arv1:5": "Tatra ca Bhagavān dhīra-gambhīra-madhurodāra-nirdoṣa-svareṇa | bhikṣun-āmantrayate sma:",
    "arv1:6": "“Dharmaṁ vo bhikṣavo deśayiṣyāmi | ādau kalyāṇaṁ madhye kalyāṇaṁ paryavasāne kalyāṇaṁ | svarthaṁ suvyañjanaṁ | kevalaṁ paripurṇaṁ parisuddhaṁ paryavadātaṁ brahmacaryaṁ saṁprakāśayiṣye | yad-uta, Arthaviniścayaṁ nāma Dharmaparyāyam ||",
    "arv1:7": "Tac-chṛṇuta sādhu ca suṣṭhu ca manasikuruta, bhāṣiṣye.”",
    "arv1:8": "“Sādhu Bhagavann”-iti te bhikṣavo Bhagavataḥ pratyaśrauṣuḥ | Bhagavāṁs-tān-idam-avocat:",
    "arv1:9": "“Katamaś-cāsau bhikṣavo ’rthaviniścayo nāma Dharmaparyāyaḥ?",
    "arv1:10": "Yad-uta:",
    "arv1:11": "Pañca skandhāḥ |",
    "arv1:12": "pañcopādāna-skandhāḥ |",
    "arv1:13": "aṣṭā-daśa dhātavaḥ |",
    "arv1:14": "dvā-daśāyatanāni |",
    "arv1:15": "dvā-daśāṅgaḥ pratītya-samutpādaḥ |",
    "arv1:16": "catvāry-ārya-satyāni |",
    "arv1:17": "dvā-viṁśatir-indriyāṇi |",
    "arv1:18": "catvāri dhyānāni |",
    "arv1:19": "catasra ārūpya-samāpattayaḥ |",
    "arv1:20": "catvāro brahma-vihārāḥ |",
    "arv1:21": "catasraḥ pratipadaḥ |",
    "arv1:22": "catasraḥ samādhi-bhāvanāḥ |",
    "arv1:23": "catvāri smṛty-upasthānāni |",
    "arv1:24": "catvāri samyak-prahāṇāni |",
    "arv1:25": "catvāra ṛddhi-pādāḥ |",
    "arv1:26": "pañcendriyāṇi |",
    "arv1:27": "pañca balāni |",
    "arv1:28": "sapta bodhyaṅgāni |",
    "arv1:29": "āryāṣṭāṅgo mārgaḥ |",
    "arv1:30": "ṣoḍaśākārānāpāna-smṛtiḥ |",
    "arv1:31": "catvāri srota-āpattyaṅgāni |",
    "arv1:32": "daśa Tathāgata-balāni |",
    "arv1:33": "catvāri vaiśāradyāni |",
    "arv1:34": "catasraḥ pratisaṁvidaḥ |",
    "arv1:35": "aṣṭādaśāveṇikā Buddhadharmāḥ |",
    "arv1:36": "dvātriṁśan-mahā-puruṣa-lakṣaṇāni |",
    "arv1:37": "aśītir-anuvyañjanāni ||",
    "arv1:38": "Ayaṁ bhikṣavo ’rthaviniścayasya dharmaparyāyasyoddeśaḥ ||",
    "arv1:39": "1. Pañca Skandhāḥ",
    "arv1:40": "Tatra bhikṣavaḥ katame pañca skandhāḥ?",
    "arv1:41": "Tad-yathā:",
    "arv1:42": "Rūpa-skandhaḥ |",
    "arv1:43": "vedanā-skandhaḥ |",
    "arv1:44": "saṁjñā-skandhaḥ |",
    "arv1:45": "saṁskāra-skandhaḥ |",
    "arv1:46": "vijñāna-skandhaś-ceti ||",
    "arv1:47": "Ime bhikṣavaḥ pañca skandhāḥ ||"
}