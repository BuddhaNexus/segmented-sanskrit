    "uv27:185": "saṁvanamukto vanam eva dhāvati ।",
    "uv27:186": "− − ⏑ ⏑ । − ⏑ − ⏑ −",
    "uv27:187": "taṁ paśyatha pudgalaṁ tv imaṁ",
    "uv27:188": "− − − ⏑ ⏑ । − ⏑ − ⏑ −",
    "uv27:189": "mukto bandhanam eva dhāvati ।।",
    "uv27:190": "− − − − । ⏑ − − − ।। − − − − । ⏑ − ⏑ −",
    "uv27:191": "nelāṅgaḥ śvetasaṁchanna ekāro vartate rathaḥ ।",
    "uv27:192": "⏑ ⏑ − − । ⏑ − − − ।। − ⏑ − ⏑ । ⏑ − ⏑ −",
    "uv27:193": "anighaṁ paśyatāyāntaṁ chinnayoktram abandhanam ।।",
    "uv27:194": "⏑ ⏑ − ⏑ । ⏑ − − − ।। − ⏑ − ⏑ । ⏑ − ⏑ −",
    "uv27:195": "bahavaḥ śaraṇaṁ yānti parvatāṁś ca vanāni ca ।",
    "uv27:196": "− − − − । ⏑ − − − ।। ⏑ − − ⏑ । ⏑ − ⏑ −",
    "uv27:197": "ārāmāṁ vṛkṣacaityāṁś ca manuṣyā bhayatarjitāḥ ।।",
    "uv27:198": "− − ⏑ ⏑ । ⏑ − − − ।। − − ⏑ ⏑ । ⏑ − ⏑ −",
    "uv27:199": "naitad dhi śaraṇaṁ kṣemaṁ naitac charaṇam uttamam ।",
    "uv27:200": "− − ⏑ ⏑ । ⏑ − − − ।। − ⏑ − − । ⏑ − ⏑ −",
    "uv27:201": "naitac charaṇam āgamya sarvaduḥkhāt pramucyate ।।",
    "uv27:202": "− ⏑ − − । ⏑ − − − ।। − − ⏑ ⏑ । ⏑ − ⏑ −",
    "uv27:203": "yas tu buddhaṁ ca dharmaṁ ca saṁghaṁ ca śaraṇaṁ gataḥ ।",
    "uv27:204": "− − ⏑ − । ⏑ − − − ।। − ⏑ − − । ⏑ − ⏑ −",
    "uv27:205": "catvāri cāryasatyāni prajñayā paśyate yadā ।।",
    "uv27:206": "− − − ⏑ । ⏑ − − − ।। − − ⏑ ⏑ । ⏑ − ⏑ −",
    "uv27:207": "duḥkhaṁ duḥkhasamutpādaṁ duḥkhasya samatikramam ।",
    "uv27:208": "− − − − । ⏑ − − − ।। − − ⏑ ⏑ । ⏑ − ⏑ −",
    "uv27:209": "āryaṁ cāṣṭāṅgikaṁ mārgaṁ duḥkhopaśamagāminam ।।",
    "uv27:210": "− − ⏑ ⏑ । ⏑ − − − ।। − − ⏑ ⏑ । ⏑ − ⏑ −",
    "uv27:211": "etad dhi śaraṇaṁ kṣemam etac charaṇam uttamam ।",
    "uv27:212": "− − ⏑ ⏑ । ⏑ − − − ।। − ⏑ − − । ⏑ − ⏑ −",
    "uv27:213": "etac charaṇam āgamya sarvaduḥkhāt pramucyate ।।",
    "uv27:214": "− ⏑ − − । ⏑ − − − ।। − ⏑ − − । ⏑ − ⏑ −",
    "uv27:215": "paśyataḥ paśyate paśyaṁ paśyate cāpy apaśyataḥ ।",
    "uv27:216": "⏑ − − − । ⏑ − − − ।। − ⏑ − − । ⏑ − ⏑ −",
    "uv27:217": "apaśyaṁ paśyate naiva paśyato nāpy apaśyataḥ ।।",
    "uv27:218": "⏑ ⏑ − ⏑ ⏑ । − ⏑ − ⏑ − Vaitālīya",
    "uv27:219": "anupaśyanayā ca paśyanā",
    "uv27:220": "− − − ⏑ ⏑ । − ⏑ − ⏑ −",
    "uv27:221": "nānātvaṁ hi tayor ihocyate ।",
    "uv27:222": "⏑ ⏑ − ⏑ ⏑ । − ⏑ − ⏑ −",
    "uv27:223": "divasasya yathaiva rātribhiḥ",
    "uv27:224": "− − − ⏑ ⏑ । − ⏑ − ⏑ −",
    "uv27:225": "saṁdhānaṁ ca tayor na vidyate ।।",
    "uv27:226": "⏑ ⏑ − ⏑ ⏑ । − ⏑ − ⏑ − Vaitālīya",
    "uv27:227": "anupaśyati cen na paśyati",
    "uv27:228": "⏑ ⏑ − − ⏑ ⏑ । − ⏑ − ⏑ −",
    "uv27:229": "tv atha cet paśyati nānupaśyati ।",
    "uv27:230": "− − ⏑ − । − ⏑ − ⏑ −",
    "uv27:231": "paśyann ayaṁ nānupaśyati",
    "uv27:232": "⏑ ⏑ − − ⏑ ⏑ । − ⏑ − ⏑ −",
    "uv27:233": "tv anupaśyaṁs tu sadā na paśyati ।।",
    "uv27:234": "− − ⏑ − । − ⏑ − ⏑ − Vaitālīya",
    "uv27:235": "paśyaṁ nu kiṁ nānupaśyate",
    "uv27:236": "⏑ ⏑ − − − ⏑ । − ⏑ − ⏑ −",
    "uv27:237": "kim apaśyaṁ nānupaśyate sadā ।",
    "uv27:238": "− − ⏑ ⏑ । − ⏑ − ⏑ −",
    "uv27:239": "kasmiṁ sati hānupaśyanā",
    "uv27:240": "− − ⏑ ⏑ ⏑ । − ⏑ − ⏑ −",
    "uv27:241": "kasmiṁ na sati nānupaśyanā ।।",
    "uv27:242": "− − ⏑ ⏑ । − ⏑ − ⏑ − Vaitālīya x 2",
    "uv27:243": "duḥkhaṁ yad ayaṁ na paśyati",
    "uv27:244": "⏑ ⏑ − − − । − ⏑ − ⏑ −",
    "uv27:245": "tad apaśyann ātmeti paśyati ।",
    "uv27:246": "− − ⏑ ⏑ । − ⏑ − ⏑ − − Aupacchandasaka",
    "uv27:247": "duḥkhaṁ tu yathā tathā prapaśyann",
    "uv27:248": "⏑ ⏑ − − ⏑ ⏑ । − ⏑ − ⏑ − Vaitālīya",
    "uv27:249": "ayam ātmeti sadānupaśyati ।।",
    "uv27:250": "− − ⏑ । − ⏑ − ⏑ − Vaitālīya",
    "uv27:251": "yenāvṛtaḥ pṛthagjanaḥ",
    "uv27:252": "− − − − । − ⏑ − ⏑ −",
    "uv27:253": "saṁskārāṁ duḥkhaṁ na paśyati ।",
    "uv27:254": "− − ⏑ ⏑ । − ⏑ − ⏑ −",
    "uv27:255": "tasmiṁ sati hānupaśyanā",
    "uv27:256": "⏑ ⏑ − − ⏑ ⏑ । − ⏑ − ⏑ −",
    "uv27:257": "vigate ’smiṁ vigatānupaśyanā ।।",
    "uv27:258": "।। paśyavargaḥ 27 ।। ।।"
}