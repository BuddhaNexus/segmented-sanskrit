{
    "uvs23:0": "Udānavarga de Subaši",
    "uvs23:1": "23. Ātmavarga",
    "uvs23:2": "subhāṣitasya śikṣeya",
    "uvs23:3": "śramaṇā ’pāsanasya ca |",
    "uvs23:4": "ekāsanasya ca rahaṁś",
    "uvs23:5": "citta-vyupaśmasya ca",
    "uvs23:6": "ekāsanaṁ eka-śayyā",
    "uvs23:7": "eka-cāryyam atandritaḥ",
    "uvs23:8": ". . . . &#160;&#160; . . . .",
    "uvs23:9": ". . . . &#160;&#160; . . vaset",
    "uvs23:10": "yaḥ sahasra sahasrāṇaṁ",
    "uvs23:11": "saṁgrāme mānuṣaṁ jayet |",
    "uvs23:12": "ekañ ca jayam ātmānaṁ",
    "uvs23:13": "sa vai saṁgrāma-jin nataḥ",
    "uvs23:14": "ātma hy asya jita śreyaṁ",
    "uvs23:15": ". . . . &#160;&#160; . . . .",
    "uvs23:16": ". . . . &#160;&#160; . . . .",
    "uvs23:17": "nityaṁ sanyama-cāriṇaḥ",
    "uvs23:18": "na devā nāpi gandharvvā",
    "uvs23:19": "na māraḥ saha brāhmuṇā |",
    "uvs23:20": "jitam avajitaṁ kūryyāt",
    "uvs23:21": "tathā prājñasya bhikṣuṇā",
    "uvs23:22": "ātmānam eva prathamaṁ . . . . &#160;&#160; . . . .",
    "uvs23:23": ". . . . &#160;&#160; . . . .",
    "uvs23:24": "evaṁ bhavatha yathā ahaṁ",
    "uvs23:25": "atmānam eva prathamaṁ",
    "uvs23:26": "pratirūpe niveśayet |",
    "uvs23:27": "tato ’nnyam anuśāsanto",
    "uvs23:28": "na kiliśyeya paṇḍitaḥ",
    "uvs23:29": "atmanañ . &#160;&#160; . . . .",
    "uvs23:30": ". . . . &#160;&#160; . . . .",
    "uvs23:31": ". . . . &#160;&#160; . . . .",
    "uvs23:32": ". . . . &#160;&#160; . . . .",
    "uvs23:33": "atmānañ cet tathā kūryyād",
    "uvs23:34": "yathānnyam anuśāsati",
    "uvs23:35": ". . . . &#160;&#160; . . . .",
    "uvs23:36": ". . . . &#160;&#160; . . . .",
    "uvs23:37": ". . . . &#160;&#160; . . . .",
    "uvs23:38": ". . . . &#160;&#160; . hāpayet |",
    "uvs23:39": "atmārtthaṁ paramaṁ jñātvā",
    "uvs23:40": "svakārttha-paramo bhavet",
    "uvs23:41": "atmā hi ātmano nāthaḥ",
    "uvs23:42": "ko hi nāthaḥ . . . .",
    "uvs23:43": ". . . . &#160;&#160; . . . .",
    "uvs23:44": ". . . . &#160;&#160; . . . .",
    "uvs23:45": ". . labhati paṇḍitaḥ",
    "uvs23:46": ". . labhati paṇḍitaḥ",
    "uvs23:47": "śīlaṁ labhati paṇḍitaḥ",
    "uvs23:48": "sukhaṁ labhati paṇḍitaḥ",
    "uvs23:49": "jñāti-maddhye virocati",
    "uvs23:50": "śoka-maddhye virocati",
    "uvs23:51": "atmā hi ātmano nāthaḥ",
    "uvs23:52": ". . . . &#160;&#160; . . . . |",
    "uvs23:53": "ātmanā hi sudāntenā",
    "uvs23:54": "sarvva-duḥkhāt pramucyate iti",
    "uvs23:55": "ātma-vargga traivīśati samāptaḥ | | * | |"
