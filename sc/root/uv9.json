    "uv9:44": "⏑ − ⏑ − । ⏑ ⏑ ⏑ − ।। − ⏑ − − । ⏑ − ⏑ − navipulā",
    "uv9:45": "vilumpate hi puruṣo yāvad asyopakalpate ।",
    "uv9:46": "⏑ − − − । ⏑ − − − ।। ⏑ ⏑ − − । ⏑ − ⏑ −",
    "uv9:47": "tato ’nye taṁ vilumpanti sa viloptā vilupyate ।।",
    "uv9:48": "− − ⏑ − । ⏑ − − − ।। − − − − । ⏑ − ⏑ −",
    "uv9:49": "kurvaṁ hi manyate bālo naitaṁ mām āgamiṣyati ।",
    "uv9:50": "− ⏑ − − । ⏑ − − − ।। − ⏑ − − । ⏑ − ⏑ −",
    "uv9:51": "sāmparāye tu jānāti yā gatiḥ pāpakarmaṇām ।।",
    "uv9:52": "− − ⏑ − । ⏑ − − − ।। − − − − । ⏑ − ⏑ −",
    "uv9:53": "kurvaṁ hi manyate bālo naitaṁ mām āgamiṣyati ।",
    "uv9:54": "− − ⏑ ⏑ । ⏑ − − − ।। ⏑ − − ⏑ । ⏑ − ⏑ − pathyā",
    "uv9:55": "paścāt tu kaṭukaṁ bhavati vipākaṁ pratiṣevataḥ ।।",
    "uv9:56": "⏑ − − − । ⏑ − − − ।। − − − − । ⏑ − ⏑ −",
    "uv9:57": "sa cet pāpāni karmāṇi kurvaṁ bālo na budhyate ।",
    "uv9:58": "− ⏑ − − । ⏑ − − − ।। − ⏑ − − । ⏑ − ⏑ −",
    "uv9:59": "karmabhiḥ svais tu durmedhā hy agnidagdhaiva tapyate ।।",
    "uv9:60": "⏑ − ⏑ − । − , − − − ।। ⏑ − − ⏑ । ⏑ − ⏑ − mavipulā",
    "uv9:61": "caranti bālā duṣprajñā hy amitrair iva cātmabhiḥ ।",
    "uv9:62": "− − − − । ⏑ − − − ।। − − ⏑ ⏑ । ⏑ − ⏑ −",
    "uv9:63": "kurvantaḥ pāpakaṁ karma yad bhavati kaṭukaṁ phalaṁ ।।",
    "uv9:64": "⏑ − − ⏑ । ⏑ − − − ।। − − − ⏑ । ⏑ − ⏑ −",
    "uv9:65": "na tat karma kṛtaṁ sādhu yat kṛtvā hy anutapyate ।",
    "uv9:66": "⏑ − − ⏑ । ⏑ − − − ।। ⏑ − − ⏑ । ⏑ − ⏑ −",
    "uv9:67": "rudann aśrumukho yasya vipākaṁ pratiṣevate ।।",
    "uv9:68": "− ⏑ − ⏑ । ⏑ − − − ।। − − − − । ⏑ − ⏑ −",
    "uv9:69": "tat tu karma kṛtaṁ sādhu yat kṛtvā nānutapyate ।",
    "uv9:70": "− − ⏑ − । − ⏑ ⏑ − ।। ⏑ − − ⏑ । ⏑ − ⏑ − bhavipulā",
    "uv9:71": "yasya pratītaḥ sumanā vipākaṁ pratiṣevate ।।",
    "uv9:72": "⏑ − − − । ⏑ − − − ।। − − − ⏑ । ⏑ − ⏑ −",
    "uv9:73": "hasantaḥ pāpakaṁ karma kurvanty ātmasukhaiṣiṇaḥ ।",
    "uv9:74": "⏑ − − − । ⏑ − − − ।। ⏑ ⏑ − − । ⏑ − ⏑ −",
    "uv9:75": "rudantas tasya vīpākaṁ prativindanti duḥkhitāḥ ।।",
    "uv9:76": "⏑ ⏑ − ⏑ । ⏑ − − − ।। − − − ⏑ ⏑ । ⏑ − ⏑ −",
