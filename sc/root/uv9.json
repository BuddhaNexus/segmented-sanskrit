{
    "uv9:0": "Udānavarga",
    "uv9:1": "9. Karmavarga",
    "uv9:2": "− ⏑ − ⏑ । ⏑ − − − ।। ⏑ − − − । ⏑ − ⏑ −",
    "uv9:3": "ekadharmam atītasya mṛṣāvādasya jantunaḥ ।",
    "uv9:4": "⏑ − ⏑ ⏑ । ⏑ − − − ।। − − − − । ⏑ − ⏑ −",
    "uv9:5": "vitīrṇaparalokasya nākāryaṁ pāpam asti yat ।।",
    "uv9:6": "− − ⏑ − । ⏑ − − − ।। − − − ⏑ । ⏑ − ⏑ −",
    "uv9:7": "śreyo hy ayoguḍā bhuktās taptā hy agniśikhopamāḥ ।",
    "uv9:8": "⏑ ⏑ − − । ⏑ − − − ।। − ⏑ − ⏑ । ⏑ − ⏑ −",
    "uv9:9": "na tu bhuñjīta duḥśīlo rāṣṭrapiṇḍam asaṁyataḥ ।।",
    "uv9:10": "⏑ − ⏑ − । ⏑ − − − ।। ⏑ − − − । ⏑ − ⏑ −",
    "uv9:11": "sa ced bibheṣi duḥkhasya sa cet te duḥkham apriyam ।",
    "uv9:12": "− − − − । ⏑ − − − ।। − − − ⏑ । ⏑ − ⏑ −",
    "uv9:13": "mā kārṣīḥ pāpakaṁ karma tv āvir vā yadi vā rahaḥ ।।",
    "uv9:14": "⏑ − − − । ⏑ − − − ।। ⏑ − ⏑ ⏑ । ⏑ − ⏑ −",
    "uv9:15": "sa cet pāpāni karmāṇi kariṣyasi karoṣi vā ।",
    "uv9:16": "⏑ − − − । ⏑ − − − ।। − − − ⏑ । ⏑ − ⏑ −",
    "uv9:17": "na te duḥkhāt pramokṣo ’sti hy utplutyāpi palāyataḥ ।।",
    "uv9:18": "− − ⏑ − । − , ⏑ ⏑ । − ⏑ − −",
    "uv9:19": "naivāntarīkṣe na samudramadhye",
    "uv9:20": "⏑ − ⏑ − । − , ⏑ ⏑ । − ⏑ − −",
    "uv9:21": "na parvatānāṁ vivaraṁ praviśya ।",
    "uv9:22": "⏑ − ⏑ − । − , ⏑ ⏑ । − ⏑ − −",
    "uv9:23": "na vidyate ’sau pṛthivīpradeśo",
    "uv9:24": "− − ⏑ − , । − ⏑ ⏑ । − ⏑ − −",
    "uv9:25": "yatra sthitaṁ na prasaheta karma ।।",
    "uv9:26": "− ⏑ − − । ⏑ − − − ।। − ⏑ − − । ⏑ − ⏑ −",
    "uv9:27": "kṛṣṇaśuklāni karmāṇi na praṇaśyanti dehinaḥ ।",
    "uv9:28": "− − − ⏓ । ⏑ − − − ।। ⏑ − ⏑ ⏑ । ⏑ − ⏑ −",
    "uv9:29": "kālaṁ prā iṣyante kṛtāny upa nāni ca ।।",
    "uv9:30": "− ⏑ − − । ⏑ − − − ।। − ⏑ − − । ⏑ − ⏑ −",
    "uv9:31": "yat pareṣāṁ vigarheta karma dṛṣṭveha pāpakam ।",
    "uv9:32": "− ⏑ − − । ⏑ − − − ।। − ⏑ − − । ⏑ − ⏑ −",
    "uv9:33": "ātmanā tan na kurvīta karmabaddho hi pāpakaḥ ।।",
    "uv9:34": "− − ⏑ − । ⏑ − − − ।। ⏑ ⏑ − ⏑ । ⏑ − ⏑ −",
    "uv9:35": "ye kūṭamānayogena viṣameṇa ca karmaṇā ।",
    "uv9:36": "⏑ − − ⏑ । ⏑ − − − ।। ⏑ ⏑ − − । ⏑ − ⏑ −",
    "uv9:37": "manuṣyān upahiṁsanti paratopakrameṇa vā ।",
    "uv9:38": "− − ⏑ − । − ,⏑ ⏑ − − ।। − ⏑ − − । ⏑ − ⏑ − mavipulā",
    "uv9:39": "te vai prapātaṁ prapatanti karmabaddhā hi te janāḥ ।।",
    "uv9:40": "− ⏑ − ⏑ । ⏑ − − − ।। − − ⏑ ⏑ । ⏑ − ⏑ −",
    "uv9:41": "yat karoti naraḥ karma kalyāṇam atha pāpakam ।",
    "uv9:42": "− ⏑ − − । ⏑ − − − ।। ⏑ ⏑ − − । ⏑ − ⏑ −",
