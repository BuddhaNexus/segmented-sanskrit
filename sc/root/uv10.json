{
    "uv10:0": "Udānavarga",
    "uv10:1": "10. Śraddhāvarga",
    "uv10:2": "− − ⏑ − । − ⏑ , ⏑ । − ⏑ − − Triṣṭubh",
    "uv10:3": "śraddhātha hrīśīlam athāpi dānaṁ",
    "uv10:4": "− − ⏑ − , । − ⏑ ⏑ । − ⏑ − −",
    "uv10:5": "dharmā ime satpuruṣapraśastāḥ ।",
    "uv10:6": "− − ⏑ − । − , − । − ⏑ − −",
    "uv10:7": "etaṁ hi mārgaṁ divyaṁ vadanti",
    "uv10:8": "− − − − , । − ⏑ ⏑ । − ⏑ − −",
    "uv10:9": "etenāsau gacchati devalokam ।।",
    "uv10:10": "⏑ − ⏑ − । − , − ⏑ − । − ⏑ − − Triṣṭubh",
    "uv10:11": "na vai kadaryā devalokaṁ vrajanti",
    "uv10:12": "− − ⏑ − , । − ⏑ − । − ⏑ − −",
    "uv10:13": "bālā hi te na praśaṁsanti dānam ।",
    "uv10:14": "− − ⏑ − । − , ⏑ ⏑ । − ⏑ − −",
    "uv10:15": "śrāddhas tu dānaṁ hy anumodamāno",
    "uv10:16": "− − ⏑ − , । − ⏑ ⏑ । − ⏑ − −",
    "uv10:17": "’py evaṁ hy asau bhavati sukhī paratra ।।",
    "uv10:18": "− − ⏑ − । − , ⏑ ⏑ । − ⏑ − − Triṣṭubh",
    "uv10:19": "śraddhā hi vittaṁ puruṣasya śreṣṭhaṁ",
    "uv10:20": "− − ⏑ − । − , ⏑ ⏑ । − ⏑ − −",
    "uv10:21": "dharmaḥ sucīrṇaḥ sukham ādadhāti ।",
    "uv10:22": "− − ⏑ − , । − ⏑ ⏑ । − ⏑ − −",
    "uv10:23": "satyaṁ hi vai svādutamaṁ rasānāṁ",
    "uv10:24": "− − − − , । − ⏑ − । − ⏑ − − Vedic opening",
    "uv10:25": "prajñājīvī jīvināṁ śreṣṭha uktaḥ ।।",
    "uv10:26": "− − ⏑ − । − ⏑ − ।। − − − − । ⏑ − ⏑ −",
    "uv10:27": "śraddhādhano hy arhatāṁ dharmaṁ nirvāṇaprāptaye ।",
    "uv10:28": "⏑ ⏑ − ⏑ । ⏑ − − − ।। − ⏑ − ⏑ । ⏑ − ⏑ −",
    "uv10:29": "śuśruṣur labhate prajñāṁ tatra tatra vicakṣaṇaḥ ।।",
    "uv10:30": "− ⏑ − ⏑ । ⏑ − − − ।। − ⏑ − − । ⏑ − ⏑ −",
    "uv10:31": "śraddhayā tarati hy ogham apramādena cārṇavam ।",
    "uv10:32": "− − − ⏑ । ⏑ − − − ।। − ⏑ − ⏑ । ⏑ − ⏑ −",
    "uv10:33": "vīryeṇa tyajate duḥkhaṁ prajñayā pariśudhyate ।।",
    "uv10:34": "− − ⏑ − । − , ⏑ ⏑ । − ⏑ − − Triṣṭubh",
    "uv10:35": "śraddhā dvitīyā puruṣasya bhavati",
    "uv10:36": "− − − − । ⏑ − ⏑ − Siloka",
    "uv10:37": "prajñā cainaṁ praśāsati ।",
    "uv10:38": "− − − ⏑ । ⏑ − − − ।। ⏑ − ⏑ ⏑ । ⏑ − ⏑ −",
    "uv10:39": "nirvāṇābhirato bhikṣuś chinatti bhavabandhanam ।।",
    "uv10:40": "− ⏑ − − । ⏑ − − − ।। − − − − । ⏑ − ⏑ −",
    "uv10:41": "yasya śraddhā ca śīlaṁ caivāhiṁsā saṁyamo damaḥ ।",
    "uv10:42": "⏑ − ⏑ − । − , − − − ।। − ⏑ − − । ⏑ − ⏑ − mavipulā",
    "uv10:43": "sa vāntadoṣo medhāvī sādhurūpo nirucyate ।।",
    "uv10:44": "− − − − । ⏑ − − − ।। − ⏑ − − । ⏑ − ⏑ −",
    "uv10:45": "śrāddhāḥ śīlena saṁpannas tyāgavāṁ vītamatsaraḥ ।",
    "uv10:46": "⏑ ⏑ − − । ⏑ − − − ।। − ⏑ − − । ⏑ − ⏑ −",
    "uv10:47": "vrajate yatra yatraiva tatra tatraiva pūjyate ।।",
    "uv10:48": "− − ⏑ − । − ⏑ ⏑ − ।। − − − − । ⏑ − ⏑ − bhavipulā",
    "uv10:49": "yo jīvaloke labhate śraddhāṁ prajñāṁ ca paṇḍitaḥ ।",
    "uv10:50": "− ⏑ − ⏑ । ⏑ − − − ।। − ⏑ − − । ⏑ − ⏑ −",
    "uv10:51": "tad dhi tasya dhanaṁ śreṣṭhaṁ hīnam asyetarad dhanam ।।",
    "uv10:52": "− − − − । ⏑ − − − ।। − − ⏑ ⏑ । ⏑ − ⏑ −",
    "uv10:53": "āryāṇāṁ darśanaḥ kāmaḥ saddharmaśravaṇe rataḥ ।",
    "uv10:54": "⏑ − ⏑ − । − ⏑ ⏑ − ।। ⏑ − − − । ⏑ − ⏑ − bhavipulā",
    "uv10:55": "vinītamātsaryamalaḥ sa vai śrāddho nirucyate ।।",
    "uv10:56": "− − − − । ⏑ − − − ।। − − − − । ⏑ − ⏑ −",
    "uv10:57": "śrāddho gṛhṇāti pātheyaṁ puṇyaṁ coraiḥ sudurharam ।",
    "uv10:58": "− − ⏑ − । − , − − − ।। ⏑ − − ⏑ । ⏑ − ⏑ − mavipulā",
    "uv10:59": "coraṁ harantaṁ vārayati harantaḥ śramaṇāḥ priyāḥ ।",
    "uv10:60": "⏑ ⏑ − − । ⏑ − − − ।। ⏑ ⏑ − ⏑ । ⏑ − ⏑ −",
    "uv10:61": "śramaṇān āgatāṁ dṛṣṭvā abhinandati paṇḍitāḥ ।।",
    "uv10:62": "⏑ − − − । ⏑ − − − ।। ⏑ − ⏑ ⏑ । ⏑ − ⏑ −",
    "uv10:63": "dadanty eke yathā śraddhā yathāvibhavato janāḥ ।",
    "uv10:64": "− ⏑ − − । ⏑ − − − ।। ⏑ − − − । ⏑ − ⏑ −",
    "uv10:65": "tatra yo durmanā bhavati pareṣāṁ pānabhojane ।",
    "uv10:66": "− − ⏑ − । ⏑ − − − ।। ⏑ − ⏑ ⏑ । ⏑ − ⏑ −",
    "uv10:67": "nāsau divā ca rātrau ca samādhim adhigacchati ।।",
    "uv10:68": "− − − − । ⏑ − − − ।। − ⏑ − ⏑ । ⏑ − ⏑ −",
    "uv10:69": "yasya tv ete samucchinnās tālamastakavad dhatāḥ ।",
    "uv10:70": "⏑ − ⏑ − । ⏑ − − − ।। ⏑ − ⏑ ⏑ । ⏑ − ⏑ −",
    "uv10:71": "sa vai divā ca rātrau ca samādhim adhigacchati ।।",
    "uv10:72": "− − − − । ⏑ − − − ।। ⏑ − − − । ⏑ − ⏑ −",
    "uv10:73": "vītaśraddhaṁ na seveta hradaṁ yadvad dhi nirjalam ।",
    "uv10:74": "⏑ − ⏑ − । ⏑ − − − ।। − ⏑ − ⏑ । ⏑ − ⏑ −",
    "uv10:75": "sa cet khanel labhet tatra vāri kardamagandhikam ।।",
    "uv10:76": "− − − − । ⏑ − − − ।। ⏑ − − − । ⏑ − ⏑ −",
    "uv10:77": "śrāddhaṁ prājñaṁ tu seveta hradaṁ yadvaj jalārthikaḥ ।",
    "uv10:78": "− − ⏑ − । − ⏑ − − ।। − ⏑ − ⏑ । ⏑ − ⏑ − ravipulā",
    "uv10:79": "acchodakaṁ viprasannaṁ śītatoyam anāvilam ।।",
    "uv10:80": "− ⏑ − ⏑ ⏑ । ⏑ − − − ।। − ⏑ − − । ⏑ − ⏑ −",
    "uv10:81": "nānurakta iti rajyeta hy atra vai dīryate janaḥ ।",
    "uv10:82": "− ⏑ − − । − ⏑ − − ।। ⏑ − − ⏑ । ⏑ − ⏑ − ravipulā",
    "uv10:83": "aprasannāṁ varjayitvā prasannān upasevate ।।",
    "uv10:84": "।। śraddhāvargaḥ 10 ।। ।।",
    "uv10:85": "uddānam ।।",
    "uv10:86": "anityakāmatṛṣṇā ca apramādas tathā priyaḥ ।",
    "uv10:87": "śīlaṁ sucaritaṁ vācakarmaśraddhā ca te daśaḥ ।। ।।"
