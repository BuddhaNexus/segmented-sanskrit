{
  "SA06bsa042_u:0": "Guru-kriyā-kramaḥ",
  "SA06bsa042_u:1": "sarvabuddhabodhisattvebhyo namaḥ",
  "SA06bsa042_u:2": "prathamaṃ prāmāṇika ācāryaḥ śiṣye prasāda-sampratyayābhilāṣātmikāṃ śraddhāṃ janayet /",
  "SA06bsa042_u:3": "tato bodhicittānuśaṃsām uktvā utsāhaṃ janayet /",
  "SA06bsa042_u:4": "tataḥ paraṃ viśiṣṭavihāre viśiṣṭapūjopakaraṇaṃ sthāpayet /",
  "SA06bsa042_u:5": "āryasaṃghān āmantrya,",
  "SA06bsa042_u:6": "praṇamya,",
  "SA06bsa042_u:7": "pādau prakṣālya,",
  "SA06bsa042_u:8": "āsanaṃ pradāya,",
  "SA06bsa042_u:9": "uttarānuttarapūjopakaraṇaiḥ sampūjya pūjāmeghamantrānapi triruccaret /",
  "SA06bsa042_u:10": "stotā sugataviśiṣṭaguṇasmaraṇadvārā sādaraṃ stutvā tattadvṛddhikarāṇyapi padāni uccaret /",
  "SA06bsa042_u:11": "tataśca deśanā-anumodanā-adhyeṣaṇā-prārthanā-pariṇāmanādayaḥ karaṇīyāḥ /",
  "SA06bsa042_u:12": "tataḥ śraddhāvān śiṣya ācārya praṇamet /",
  "SA06bsa042_u:13": "adhyeṣaṇādibhirdvividhaṃ bodhicittaṃ samutpādya teṣāṃ svasvabhāvaṃ bhedaṃ vaiśiṣṭyañcāpi khyāpayet /",
  "SA06bsa042_u:14": "tataḥ bodhicaryā (ṇāṃ_)",
  "SA06bsa042_u:15": "ṣaṭpāramitānāṃ,",
  "SA06bsa042_u:16": "catuḥsaṃgrahavastūnāṃ caturapramāṇādīnāṃ ca lakṣaṇaṃ,",
  "SA06bsa042_u:17": "hetuṃ,",
  "SA06bsa042_u:18": "phalaṃ,",
  "SA06bsa042_u:19": "śikṣākramaṃ,",
  "SA06bsa042_u:20": "cyutyacyutidoṣaguṇān yathāvidhiśikṣādikamapi vistareṇa nirdiśet /",
  "SA06bsa042_u:21": "sā ca apramādena samprajanyena smṛtyā ca grahaṇīyeti śikṣeta /",
  "SA06bsa042_u:22": "teṣāṃ lakṣaṇaṃ kramaṃ cyutyacyutidoṣaguṇādīnapi śikṣeta /",
  "SA06bsa042_u:23_0": "tadanuṣṭhānāyāpi tīvravīryamutpādya nidhyānaduḥkhādhivāsanākṣāntim avikṣipta-samādhiṃ",
  "SA06bsa042_u:23_1": "prajñāniḥsvabhāvatāṃ ca jñātvā triśikṣāṃ trividhaprajñāṃ vā samādhāya caryāpathavidhinā",
  "SA06bsa042_u:23_2": "śikṣeta iti nirdiśet /",
  "SA06bsa042_u:24": "ante praṇidhānena parisamāpayed ityapi vadet /",
  "SA06bsa042_u:25": "ayaṃ hi ācāryadeśanākriyākramaḥ /",
  "SA06bsa042_u:26": "śiṣyo 'pi yathāvidhirupadiṣṭaḥ tathā śikṣeta /",
  "SA06bsa042_u:27": "ayaṃ tu lākṣaṇikamahāyānacittotpāda-śikṣā-deśanā-vidhiḥ kramo vā audārikatayā darśitaḥ /",
  "SA06bsa042_u:28": "vistareṇa tu parato jñātavyam /",
  "SA06bsa042_u:29": "saṃkṣiptagurukriyākramaḥ mahāpaṇḍitācāryadīpaṅkaraśrījñānaviracitaḥ samāptaḥ //"
}