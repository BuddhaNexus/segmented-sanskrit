{
  "SA18sghancsu:0": "śrīghanācārasaṃgrahaḥ",
  "SA18sghancsu:1": "prathamo 'dhyāyaḥ",
  "SA18sghancsu:2": "buddhanamaskāraḥ",
  "SA18sghancsu:3": "Śghs_1.1 prahīṇāśeṣasaṃkleśajñeyāmbhonidhipāragaṃ /",
  "SA18sghancsu:4": "praṇamya śrāmaṇerāṇāmācāraḥ saṃgrahīṣyate //",
  "SA18sghancsu:5": "iti saṃghasenena saṃvihitoddhāre śrīghanācārasaṃgrahe buddhanamaskāro nāma prathamo 'dhyāyaḥ //",
  "SA18sghancsu:6": "dvitīyo 'dhyāyaḥ",
  "SA18sghancsu:7": "śrāmaṇerabhāvaḥ",
  "SA18sghancsu:8": "Śghs_2.1 śaraṇaṃ gatavān buddhaṃ dharmaṃ saṃghaṃ ca bhaktitaḥ /",
  "SA18sghancsu:9": "śikṣāpañcakamādāya yo 'nupravrajito jinaṃ //",
  "SA18sghancsu:10": "Śghs_2.2 yāvajjīvaṃ vadhasteyamaithunānṛtavākyataḥ /",
  "SA18sghancsu:11": "virataḥ madyapānācca mahoccaiḥ śayanāsanāt //",
  "SA18sghancsu:12": "Śghs_2.3 nṛtyāder gandhamālyādyāt vikālāśanatastathā /",
  "SA18sghancsu:13": "rukmarūpyagrahāccaiṣa śrāmaṇero munermataḥ / //",
  "SA18sghancsu:14": "iti saṃghasenena saṃvihitoddhāre śrīghanācārasaṃgrahe śrāmaṇerabhāvo nāma dvitīyo 'dhyāyaḥ //",
  "SA18sghancsu:15": "tṛtīyo 'dhyāyaḥ",
  "SA18sghancsu:16": "śrāmaṇerabhāvopāyaḥ",
  "SA18sghancsu:17": "1 prāṇivadhaviratiśikṣāpadaṃ",
  "SA18sghancsu:18": "saṃvaratyāgaḥ",
  "SA18sghancsu:19": "Śghs_3,1.1 sakalena śarīreṇa śarīrānyatareṇa vā /",
  "SA18sghancsu:20": "pañcaśākhādinirvṛttaṃ na hanyāt prāṇinaṃ [yatiḥ] //",
  "SA18sghancsu:21": "Śghs_3,1.2 mṛtyorvarṇa na bhāṣeta śastrahāraṃ na caiṣayet /",
  "SA18sghancsu:22": "vadhakena na cittena māraṇāya niyojayet //",
  "SA18sghancsu:23": "Śghs_3,1.3 virekavamanālepaviṣaśastrābhisaṃskṛti /",
  "SA18sghancsu:24": "na kuryāt prāṇighātāya na ca garbhasya śātanaṃ //",
  "SA18sghancsu:25": "Śghs_3,1.4 nimittaṃ na vratī kuryāt svapnolūkādivāśitaiḥ /",
  "SA18sghancsu:26": "[dauḥśīlaṃ] (vāpi kāryaṃ na)",
  "SA18sghancsu:27": "dānaśīlaphalāptibhiḥ //",
  "SA18sghancsu:28": "Śghs_3,1.5 madhyapaścātpurogeṣu yatraiva vadhakaṃ manaḥ /",
  "SA18sghancsu:29": "[taṃ puruṣaṃ] dhnato hiṃsā nānyamityāha sarvavit //",
  "SA18sghancsu:30": "Śghs_3,1.6 kūṭāvamārthāvaṣṭambhavetālā[dya]bhisaṃskṛti /",
  "SA18sghancsu:31": "avapayañca kuryānna māraṇāya śarīriṇāṃ //",
  "SA18sghancsu:32": "Śghs_3,1.7 taskarā[dya]hisenābhyaḥ yatra mārge bhayaṃ[bhavet] /",
  "SA18sghancsu:33": "tatpanthānaṃ na nāśāya dehināṃ kathayedyatiḥ //",
  "SA18sghancsu:34": "Śghs_3,1.8 bhujagāvartakābhyāṃ ca yatra tīrthe[bhayaṃ bhavet] /",
  "SA18sghancsu:35": "[nadīprataraṇārthāya] tattīrthaṃ na prakāśayet //",
  "SA18sghancsu:36": "Śghs_3,1.9 kiñcid bhūpataye mā dāstvaṃ varaṃ jīvitaṃ tyaja /",
  "SA18sghancsu:37": "iti baddhāyukte 'yuktaṃ vacanaṃ na vaded [yatiḥ] //",
  "SA18sghancsu:38": "Śghs_3,1.10 bhujaga [vyāḍayakṣe]bhyaḥ yadvihāre[bhayaṃ bhavet] /",
  "SA18sghancsu:39": "tadvadhakābhiprāyeṇāgantukāya na coddiśet //",
  "SA18sghancsu:40": "Śghs_3,1.11 vyāghrādivyapadeśena śatruṃ hanyād hi yaḥ śaṭhaḥ /",
  "SA18sghancsu:41": "vihārādāśu[nirdvāraṃ] ghaṭṭanīyaḥ sa cellakaiḥ //",
  "SA18sghancsu:42": "Śghs_3,1.12 tathā kāryaṃ yathaiko 'pi nānirjīvecca kaścana /",
  "SA18sghancsu:43": "adharmyā na kriyā kāryā saṃsmṛtya krakacopamaṃ //",
  "SA18sghancsu:44": "Śghs_3,1.13 vadhaśca śrāmaṇerā ye ghātayituṃ vadhīkṛtāḥ /",
  "SA18sghancsu:45": "yugapat tatprayoge te nāśanīyā vihārataḥ //",
  "SA18sghancsu:46": "Śghs_3,1.14 upakramo nṛsaṃjñā ca naro vadhakacetanā /",
  "SA18sghancsu:47": "jīvitasya kṣayaśceti pañcāṃgāni nṛghātane //",
  "SA18sghancsu:48": "Śghs_3,1.15 śrāmaṇereṇa nāśāya viṣaśastrādi yat[kṛtaṃ] /",
  "SA18sghancsu:49": "mriyate narastenaivāsau tadāsaṃvarī bhavet //",
  "SA18sghancsu:50": "Śghs_3,1.16 avakrītādirajñānāt manuṣyaṃ mārayan khalu /",
  "SA18sghancsu:51": "saṃvarakṣobhalābhī sa [yatir] nonmattādikaḥ //",
  "SA18sghancsu:52": "duṣkṛtāni",
  "SA18sghancsu:53": "Śghs_3,1.17 kāyamaitrādi sattveṣu yatinā kāryaṃ sarvadā /",
  "SA18sghancsu:54": "yasmāt kāruṇikairuktaṃ tasmāt[sattvānna pīḍayet] //",
  "SA18sghancsu:55": "Śghs_3,1.18 na sattvān pīḍayeddārurajvayaścarmabandhanaiḥ /",
  "SA18sghancsu:56": "jalānalapraveśānutyāgādau na niyojayet //",
  "SA18sghancsu:57": "Śghs_3,1.19 kṛmigorūpa[kādīnāṃ] mithyājīvaśca hiṃsanaṃ /",
  "SA18sghancsu:58": "karṣaṇe[hi] bhavedyasmāt tasmāt[tad]dūrato tyajet //",
  "SA18sghancsu:59": "Śghs_3,1.20 nāṃkayed gomahiṣyādi nāsikāṃ nāsya vedhayet /",
  "SA18sghancsu:60": "[yatiśca vividhān sattvān] vetrādinā na tāḍayet //",
  "SA18sghancsu:61": "Śghs_3,1.21 uddiśya yat kṛtaṃ māṃsavyañjanaṃ [khādato] yateḥ /",
  "SA18sghancsu:62": "nighṛṇaṃ jāyate cittaṃ tasmāttannaiva bhakṣayet //",
  "SA18sghancsu:63": "Śghs_3,1.22 jñeyaṃ tu tribhirākārairīkṣitaśrutaśaṃkitaiḥ /",
  "SA18sghancsu:64": "īkṣitaṃ yat svayaṃ dṛṣṭaṃ śrutaṃ pratyāyitoditaṃ //",
  "SA18sghancsu:65": "Śghs_3,1.23 gṛhābaddhamṛgādīnāṃ śrṛṃgapakṣādidarśanāt /",
  "SA18sghancsu:66": "āśaṃkotpadyate [tatra] mamoddiśya hatā na vā //",
  "SA18sghancsu:67": "Śghs_3,1.24 pṛṣṭo dātā vadedevaṃ tvannimittamamī hatā /",
  "SA18sghancsu:68": "tasmin gṛhe na bhuñjīta virataḥ prāṇināṃ vadhāt //",
  "SA18sghancsu:69": "Śghs_3,1.25 śyenakādihatā vai[te] śāliyavamudgabhakṣaṇāt /",
  "SA18sghancsu:70": "mātāpitrośca yajñasya kṛte doṣo 'sti nāśnatāṃ //",
  "SA18sghancsu:71": "Śghs_3,1.26 ekaṃ śrīghanamuddiśya māṃsaṃ matsyādikaṃ kṛtaṃ /",
  "SA18sghancsu:72": "anyeṣāṃ śrāmaṇerāṇāṃ tadbhogāya na kalpate //",
  "SA18sghancsu:73": "Śghs_3,1.27 nādeyādijalaṃ jānan nāpi pibet sajantukaṃ /",
  "SA18sghancsu:74": "jantavo 'bhimatāḥ sūkṣmās trasikormikirādayaḥ //",
  "SA18sghancsu:75": "Śghs_3,1.28 vāri[pūtyā]yadhiṣṭheyaḥ karako [hi] sakhallakaḥ /",
  "SA18sghancsu:76": "vighātaparihārārthaṃ kośo 'ntaśaḥ suvāsasaḥ //",
  "SA18sghancsu:77": "Śghs_3,1.29 divyanetrāndhayorneṣṭaṃ jalasya pratyavekṣaṇaṃ /",
  "SA18sghancsu:78": "hastāṃguṣṭhāgrakāvartadarśino na nivāryate //",
  "SA18sghancsu:79": "Śghs_3,1.30 locanavibhramo mā bhūditi paśyenna tacciraṃ /",
  "SA18sghancsu:80": "kalpamātraṃ na vai kuryāt māyāśāṭhayasamanvitaḥ //",
  "SA18sghancsu:81": "Śghs_3,1.31 yenāntareṇa ṣaṣṭayabdaḥ paribhramyate kuñjaraḥ /",
  "SA18sghancsu:82": "śakaṭaṃ vaṃśapūrṇaṃ vā sa kālaḥ salilekṣaṇe //",
  "SA18sghancsu:83": "Śghs_3,1.32 ūrdhvādhomadhyamāstistraḥ salilasyāpi bhūmayaḥ /",
  "SA18sghancsu:84": "yāyā bhūḥ śuddhimāyāti kāryaṃ kuryāttayā[yatiḥ] //",
  "SA18sghancsu:85": "Śghs_3,1.33 yatrādhaḥ prāṇakā yānti sthūlāḥ karatalāhatāḥ /",
  "SA18sghancsu:86": "[grāhyaṃ] tadudakaṃ [srāvyaṃ] paṃcāṃgulikayā na cet //",
  "SA18sghancsu:87": "Śghs_3,1.34 bhaveyurudake yasmin kare lagnā[śca] prāṇinaḥ /",
  "SA18sghancsu:88": "na tatra pāṇipādāsyavastrādi kṣālayedyatiḥ //",
  "SA18sghancsu:89": "Śghs_3,1.35 kule gatena praṣṭavyaṃ jalaṃ [hi] srāvitaṃ na vā /",
  "SA18sghancsu:90": "neti cet saṃjñiko vācyaḥ srāvayetyitaro na tu //",
  "SA18sghancsu:91": "Śghs_3,1.36 [kintu] srāvyaṃ jalaṃ pātre kṛtvātmīye sajantukaṃ /",
  "SA18sghancsu:92": "[pṛṣṭvā] yastadānītaṃ muñcet tatraiva [sa] svayaṃ //",
  "SA18sghancsu:93": "Śghs_3,1.37 saptāhaṃ vā[tathā] yatra pānīyamavatiṣṭhati /",
  "SA18sghancsu:94": "vihāre vā kaṭāhādau sthāpayet tadaśuṣyati //",
  "SA18sghancsu:95": "Śghs_3,1.38 pravṛṣṭe vā [yatir] deve svacchanīraughavāhini /",
  "SA18sghancsu:96": "nimnagānāṃ patiṃ pātaṃ gacchateti visarjayet //",
  "SA18sghancsu:97": "Śghs_3,1.39 sudīrghatalikāvaktrarajjudvayā[va]baddhayā /",
  "SA18sghancsu:98": "ghaṭikayodakaṃ muñcedadhastādudake 'dhvagaḥ //",
  "SA18sghancsu:99": "Śghs_3,1.40 ghaṭikātritayaṃ vīkṣya mārgageṇodapānataḥ /",
  "SA18sghancsu:100": "pariśuddhāścet peyaṃ jalaṃ tat srāvyamanyathā / //",
  "SA18sghancsu:101": "Śghs_3,1.41 na rajjughaṭikādānaṃ śastaṃ saprāṇake jale /",
  "SA18sghancsu:102": "pibeti vaktuṃ dātuṃ vā na jātu kṣamate yatiḥ //",
  "SA18sghancsu:103": "Śghs_3,1.42 sajantukaṃ taḍāgādi na pareṣāmuccairvadet /",
  "SA18sghancsu:104": "[kṛtyaṃ] kuru samīkṣyeti pṛṣṭaḥ prativadetparān //",
  "SA18sghancsu:105": "Śghs_3,1.43 upādhyāye 'pi vaktavyaṃ saprāṇakamidaṃ na vā /",
  "SA18sghancsu:106": "taḍāgādīti [vai] śāṭhayaṃ karttavyaṃ [yatinā] na [tu] //",
  "SA18sghancsu:107": "Śghs_3,1.44 vṛkṣaseko na dātavyo 'pariśuddhena vāriṇā /",
  "SA18sghancsu:108": "upādhyāyādikasnānaṃ karttavyaṃ ca tathaiva na //",
  "SA18sghancsu:109": "Śghs_3,1.45 mastukāñjikasauvīramaṇḍadaṇḍāhatādikaṃ /",
  "SA18sghancsu:110": "na pibet na yatirdadyāt parasmai na bhuvi tyajet //",
  "SA18sghancsu:111": "Śghs_3,1.46 samatkuṇaṃ yacchayanamātape tanna śoṣayet /",
  "SA18sghancsu:112": "na hime kardame vā[pi] śītoṣṇavāriṇi kṣipet //",
  "SA18sghancsu:113": "Śghs_3,1.47 navakarma sa no kuryāt sajantukena [vāriṇā] /",
  "SA18sghancsu:114": "dināntaṃ srāvayitvā tad dhāryaṃ [trikoṇa]khallakaṃ //",
  "SA18sghancsu:115": "Śghs_3,1.48 bhṛtakaṃ śikṣayedevaṃ vadhāna tvaṃ trikoṇakaṃ /",
  "SA18sghancsu:116": "kapāt[tat] srāvayotkṣipya khallakaṃ ca vimocaya //",
  "SA18sghancsu:117": "Śghs_3,1.49 trikoṇasaptakenāmbhaḥ srāvyaṃ khallakena tat /",
  "SA18sghancsu:118": "[pratikūpyatha] kāryā[vā] tyaktvā deśāntaraṃ [vrajet] //",
  "SA18sghancsu:119": "Śghs_3,1.50 abhūtvā sambhavantyete bhūtvā yānti bhavāntaraṃ /",
  "SA18sghancsu:120": "navakarma tadā kārya yathoktavidhikāriṇā //",
  "SA18sghancsu:121": "Śghs_3,1.51 satpaṭābaddhamañcāderucchīdaccaturāṃgulāt /",
  "SA18sghancsu:122": "nadyādau jalamālokya kāryaṃ ca navakarmaṇi //",
  "SA18sghancsu:123": "Śghs_3,1.52 chidrakarṇadvayāsaktasūtrabaddhadvidaṇḍakaṃ /",
  "SA18sghancsu:124": "dhāraṇapātrakaṃ dadhyāt khallakasya bahir[yatiḥ] //",
  "SA18sghancsu:125": "Śghs_3,1.53 kṛpāparītacittena svādu vāri sajantukaṃ /",
  "SA18sghancsu:126": "kṣāre 'mbhasi na moktavyamanāpat mṛṣṭasaṃjñinaḥ //",
  "SA18sghancsu:127": "2 adattādānaviratiśikṣāpadaṃ",
  "SA18sghancsu:128": "saṃvaratyāgaḥ",
  "SA18sghancsu:129": "Śghs_3,2.1 kālikaṃ [yāmikaṃ] yāvajjīvikaṃ sarpirādikaṃ /",
  "SA18sghancsu:130": "pārihāryamanādheyaṃ kalpyākalpyamakalpikaṃ //",
  "SA18sghancsu:131": "Śghs_3,2.2 pṛthivyudakadvicatuṣpadāpadakapādapa /",
  "SA18sghancsu:132": "tadgataṃ ca yatiḥ kiñcinnādadīta parasvakaṃ //",
  "SA18sghancsu:133": "Śghs_3,2.3 kārṣāpaṇacaturbhāgaṃ tadardhamathavā dhanaṃ /",
  "SA18sghancsu:134": "steyacitto harannanyair nāśanīyo[yatir] laghu //",
  "SA18sghancsu:135": "Śghs_3,2.4 vāṭāddhṛte gaje pādaiś caturbhirayatiś cyute /",
  "SA18sghancsu:136": "niṣkrānte saṃvṛtadvārād dvipahṛtsyād yatiḥ [khalu] //",
  "SA18sghancsu:137": "Śghs_3,2.5 gulphābaddhekṣadaṇḍāre dūrākṛṣṭe mahītalāt /",
  "SA18sghancsu:138": "saṃvarabhaṃga utkṣipte pañjarādgajavaddvije //",
  "SA18sghancsu:139": "Śghs_3,2.6 deśānnayed hi sandeśadraviṇaṃ ca sañcārayet /",
  "SA18sghancsu:140": "aṃgāt stainyena cittena saṃvaraghūtamāpnute //",
  "SA18sghancsu:141": "Śghs_3,2.7 mṛto 'sau matvā śrutvaivādhvagād vai brahmacāriṇaḥ /",
  "SA18sghancsu:142": "sīmāntasthāyine datvā gṛhṇan syādayatiryatiḥ //",
  "SA18sghancsu:143": "Śghs_3,2.8 yadvittaṃ śrāmaṇerasya mṛtasya nirvṛtārhataḥ /",
  "SA18sghancsu:144": "upādhyāyasya prāpnoti tadityevaṃ jagau muniḥ //",
  "SA18sghancsu:145": "Śghs_3,2.9 hartturiṣṭāṃ diśaṃ yāyād vratī ced hastinaṃ haret /",
  "SA18sghancsu:146": "asau harttā vratī cauraḥ karipe hṛtasaṃjñini //",
  "SA18sghancsu:147": "Śghs_3,2.10 pūjācīvaramālāntadvayasya khalu mocanāt /",
  "SA18sghancsu:148": "avanau taccyutau satyāṃ bhraśyate saṃvarād [yatiḥ] //",
  "SA18sghancsu:149": "Śghs_3,2.11 kṣiptaṃ mauktikahārādi gṛhītvā tad mahākulāt //",
  "SA18sghancsu:150": "nyasya prasevikāyāṃ ca sahāyena ca hārayan //",
  "SA18sghancsu:151": "Śghs_3,2.12 jaṭālenāthavā vatsa haran ki saṃvaracyutaḥ /",
  "SA18sghancsu:152": "ki pādacyutimātreṇa hyupacāravyatikrame //",
  "SA18sghancsu:153": "Śghs_3,2.13 rātrau gośakaṭāśvādīn kaścid vadhnāti ced yatiḥ /",
  "SA18sghancsu:154": "etānete hariṣyanti tat kiṃ syāccyutasaṃvaraḥ //",
  "SA18sghancsu:155": "Śghs_3,2.14 ṛjuke kīlake bandhe kaṭhine hāra[kaṃ] haran /",
  "SA18sghancsu:156": "utkṣepaṇe ca cauraḥ syāt kuṭile śithile na tu //",
  "SA18sghancsu:157": "Śghs_3,2.15 chidrayitvā ghaṭaṃ sarpiḥ kṣaudraṃ tailaṃ jalaṃ haran /",
  "SA18sghancsu:158": "yatiḥ pūrasya vicchede saṃvarakṣobhamāpnute //",
  "SA18sghancsu:159": "Śghs_3,2.16 vaṇṭayamāṇe gṛhe bhrātrorbhāgādekasya lipsayā /",
  "SA18sghancsu:160": "bālamātraṃ bhūmiṃ yatiḥ syāt kṣatasaṃvaraḥ //",
  "SA18sghancsu:161": "Śghs_3,2.17 taskaropāttapātrādi nirāśaḥ punarādadan /",
  "SA18sghancsu:162": "saṃvarād bhraśyate hītotarastvāpnoti nāpadaṃ //",
  "SA18sghancsu:163": "Śghs_3,2.18 mitrabhāvena labdhaṃ syād dattaṃ gopādibhiś[ca]vā /",
  "SA18sghancsu:164": "tadā [tad] ādadānasya yaternāpattiriṣyate //",
  "SA18sghancsu:165": "Śghs_3,2.19 bhayopadarśanaṃ kāryaṃ pātracīvaramuktaye /",
  "SA18sghancsu:166": "rājani na vaded gatvaibhiścaurair muṣitā vayaṃ //",
  "SA18sghancsu:167": "Śghs_3,2.20 niṣkāsayasyupādhyāyācāryāṇāṃ yattadāvathoḥ /",
  "SA18sghancsu:168": "tadityuktvā haredekaḥ syātāṃ dvāvapi taskarau //",
  "SA18sghancsu:169": "Śghs_3,2.21 svadravyaṃ stainyacittenāpaharantāyimau yatī /",
  "SA18sghancsu:170": "bhāgārdhenāyatistveko niṣkāsitārdhenetaraḥ //",
  "SA18sghancsu:171": "Śghs_3,2.22 dāsyāmaste samaṃ tiṣṭha dvāre kuryāma caurikāṃ /",
  "SA18sghancsu:172": "ityuktakṛta āpattiḥ sahaiva cauracellakaiḥ //",
  "SA18sghancsu:173": "Śghs_3,2.23 uṣitvāgantuke yāte vismṛtya pātracīvaraṃ /",
  "SA18sghancsu:174": "āgatya yo yatistacced gopayeccaura eva saḥ //",
  "SA18sghancsu:175": "Śghs_3,2.24 evamāvāsikā sarve bhavanti kṣatasaṃvarāḥ /",
  "SA18sghancsu:176": "sa eva yadi saṃsmṛtya nayatīha na kilviṣī //",
  "SA18sghancsu:177": "Śghs_3,2.25 anyena steyacittena pātramanyasya ced yatiḥ /",
  "SA18sghancsu:178": "ānāyayati sa tato doṣavān bhavati vratī //",
  "SA18sghancsu:179": "Śghs_3,2.26 yāvat pūjā munestāvat saṃghasyāpi pravartate /",
  "SA18sghancsu:180": "iti yo 'nyasya datte sa bhavati kṣatasaṃvaraḥ //",
  "SA18sghancsu:181": "Śghs_3,2.27 likhitvoddhārakaṃ grāhyaṃ mithaḥ stūpācca saṃghataḥ /",
  "SA18sghancsu:182": "karmādāne ca vaktavyamiyat noktakṛto 'nyathā //",
  "SA18sghancsu:183": "Śghs_3,2.28 svāṃśamuktaharaścauro[yatyora]madhye tayordvayoḥ /",
  "SA18sghancsu:184": "dāsyāmīti ca viśvāsaṃ kṛtvā prāpnoti nāpadaṃ //",
  "SA18sghancsu:185": "Śghs_3,2.29 labhase tvaṃ labhe cāhaṃ yaṃ lābhaṃ tadāvayoḥ /",
  "SA18sghancsu:186": "iti lābhe samutpanne tato 'rdhena [sa] taskaraḥ //",
  "SA18sghancsu:187": "Śghs_3,2.30 dakṣiṇādeśane 'pyevaṃ pāṃśukūlikayordvayoḥ /",
  "SA18sghancsu:188": "bhinatti yaḥ kriyākāraṃ tataḥ sa cyutasaṃvaraḥ //",
  "SA18sghancsu:189": "Śghs_3,2.31 upakāryapakāribhyaścānnapānādi sāṃghikaṃ /",
  "SA18sghancsu:190": "vihārasvāmirājādicaurādibhyo yathākramaṃ //",
  "SA18sghancsu:191": "Śghs_3,2.32 śrīghanebhyo 'pi dātavyaṃ prātarāśādi sāṃghikaṃ /",
  "SA18sghancsu:192": "ālepanādi kurvanti vihāre yadi nānyathā //",
  "SA18sghancsu:193": "Śghs_3,2.33 sīmāntasthāyine datvā bhikṣūpasthānakāriṇe /",
  "SA18sghancsu:194": "dārakaprasthavyājena gṛhṇīyāttaṇḍulādikaṃ //",
  "SA18sghancsu:195": "Śghs_3,2.34 atyaktāśo[hi]gṛhṇīyāt naṣṭaṃ svapātracīvaraṃ /",
  "SA18sghancsu:196": "matvaivaṃ naṣṭapātrādirāśāṃ naiva tyajed [yatiḥ] //",
  "SA18sghancsu:197": "Śghs_3,2.35 svādhyāyādhyayanoddeśaṃ kṛtvā ye saṃghaśīlakaṃ /",
  "SA18sghancsu:198": "kriyākāraṃ na kurvanti te jinoditalaṃghinaḥ //",
  "SA18sghancsu:199": "Śghs_3,2.36 patākālakṣaṇaṃ stūpānna grāhyaṃ yatinā[khalu] /",
  "SA18sghancsu:200": "prāṃśukūlamiti grāhyamaniloddhūtapātitaṃ //",
  "SA18sghancsu:201": "Śghs_3,2.37 śulkakṛtyaṃ paradravyaṃ na nayet nāpi nāyayeta /",
  "SA18sghancsu:202": "śulkapradānamokṣārthopāyaṃ nopadiśed yatiḥ //",
  "SA18sghancsu:203": "Śghs_3,2.38 ratnaṃ datvā yatibhyaḥ prāk paścāt mārgayate vaṇik /",
  "SA18sghancsu:204": "visaṃvādayasītyevaṃ dātavyaṃ paribhāṣya tat //",
  "SA18sghancsu:205": "Śghs_3,2.39 nāsti śulkaṃ munerevaṃ vratināṃ pāribhogike /",
  "SA18sghancsu:206": "krayavikrayakṛddadyāt śulkamanyatra vastuni //",
  "SA18sghancsu:207": "Śghs_3,2.40 varṣāvāsikalābho [hi] deyo varṣoṣitasya ca /",
  "SA18sghancsu:208": "jīvitabrahmacaryasya yayornāśastayorapi //",
  "SA18sghancsu:209": "Śghs_3,2.41 prākprāgupagataiḥ kāryā varṣāvāsikayācanā /",
  "SA18sghancsu:210": "paścādupagataiḥ paścāt saṃghe yugapadeva ca //",
  "SA18sghancsu:211": "Śghs_3,2.42 punargṛhṇāti dīkṣāṃ yo vastukarmajugupsayā /",
  "SA18sghancsu:212": "bhikṣubhāvaṃ parityajya tasmai cāpyāha sarvavit //",
  "SA18sghancsu:213": "Śghs_3,2.43 avarṣoṣitavibhrāntakudṛṣṭimṛtakās[tathā] /",
  "SA18sghancsu:214": "deśāntaragatā lābhaṃ nārhanti paṃcapudgalāḥ //",
  "SA18sghancsu:215": "Śghs_3,2.44 amuṣmai deyamityevaṃ lābhotpanne yatau mṛte /",
  "SA18sghancsu:216": "dātavyo niyataṃ tasmai sa vikalpitabhikṣave //",
  "SA18sghancsu:217": "Śghs_3,2.45 deśāntaragatasyāpi sthāpayet kalpamandire /",
  "SA18sghancsu:218": "traye kurvanti cānarthaṃ tebhyo deyaṃbudharna hi //",
  "SA18sghancsu:219": "Śghs_3,2.46 ācchādaṃ cīvaraṃ mūlyaṃ dāsyāmīti catuṣpadaiḥ /",
  "SA18sghancsu:220": "āpnoti sammukhībhūtān lābho netareṣu ca //",
  "SA18sghancsu:221": "Śghs_3,2.47 varṣāvāsikalābhaśca varṣoṣitasya [gacchati] /",
  "SA18sghancsu:222": "tadetarasya doṣo na gṛhṇato dāyakecchayā //",
  "SA18sghancsu:223": "Śghs_3,2.48 kāliko yāmiko yāvajjīvikaḥ sāptāhikaḥ /",
  "SA18sghancsu:224": "mṛtakṣudrapariṣkāranaityakākālacīvaraṃ //",
  "SA18sghancsu:225": "Śghs_3,2.49 kuṭīpratiṣṭhājātyādisambodhyādimahodbhavaḥ /",
  "SA18sghancsu:226": "prāpnoti daśadhā lābhaḥ sammukhībhūtapudgalān //",
  "SA18sghancsu:227": "Śghs_3,2.50 anādheyaṃ [gurudravyaṃ] sāṃghikaṃ śayanāsanaṃ /",
  "SA18sghancsu:228": "vikretavyaṃ na bhoktavyaṃ kṛtvā paudgalikaṃ na ca //",
  "SA18sghancsu:229": "Śghs_3,2.51 cāturdiśāya buddhāya sammukhībhūtasāṃghike",
  "SA18sghancsu:230": "yatirdravyāntare datte tatra tatropanāmayet //",
  "SA18sghancsu:231": "Śghs_3,2.52 tūṣṇīṃ datvā gate deyaṃ buddhe muktāphalādikaṃ /",
  "SA18sghancsu:232": "cāturdiksammukhībhūte śayanāsanamaṃśukaṃ //",
  "SA18sghancsu:233": "Śghs_3,2.53 pṛthu dravyaṃ paropāttaṃ tatsaṃjñī steyacetanā /",
  "SA18sghancsu:234": "sthānacyutiśca paṃcāṃgairyuktaścedayatirbhavet //",
  "SA18sghancsu:235": "Śghs_3,2.54 dattasvakāparopāttasaṃjñī cānyo 'pi saṃvarī /",
  "SA18sghancsu:236": "na tāvatkālikaṃ svāṃśād gṛhṇan jahāti saṃvaraṃ //",
  "SA18sghancsu:237": "Śghs_3,2.55 ādāyādattamutplutya khaṃ gatvāśācatuṣṭayaṃ /",
  "SA18sghancsu:238": "tatraiva punarāsīno bhavati kṣatasaṃvaraḥ //",
  "SA18sghancsu:239": "Śghs_3,2.56 avakrītādirajñānāt paradravyaṃ haran khalu /",
  "SA18sghancsu:240": "saṃvarakṣobhalābhī sa yatirnonmattādikaḥ //",
  "SA18sghancsu:241": "3 maithunaviratiśikṣāpadaṃ",
  "SA18sghancsu:242": "saṃvaratyāgaḥ",
  "SA18sghancsu:243": "Śghs_3,3.1 nṛstrīpaṇḍakaviṇmūtravaktrarandhreṃ'gajāta[kaṃ] /",
  "SA18sghancsu:244": "kṣiptvā nigamayet svādaṃ sa [yatiḥ] kṣatasaṃvaraḥ //",
  "SA18sghancsu:245": "Śghs_3,3.2 mānuṣā'mānuṣāste tu tiryañcaśca narādayaḥ /",
  "SA18sghancsu:246": "mṛtāḥ suptāśca jāgranto jñeyā [hi] maithunāśrayāḥ //",
  "SA18sghancsu:247": "Śghs_3,3.3 hastinīmāditaḥ [kṛtvā] yāvat kukkuṭajāti[kāṃ] /",
  "SA18sghancsu:248": "kṣudrikāṃ mahatīṃ gacchan[sa yatiś] cyavate vratāt //",
  "SA18sghancsu:249": "duṣkṛtāni",
  "SA18sghancsu:250": "Śghs_3,3.4 raktaḥ san na striyaṃ paśyet śabdamākarṇayenna ca /",
  "SA18sghancsu:251": "nirvastraḥ san na copeyādaṃgajāta na nirbhujet //",
  "SA18sghancsu:252": "Śghs_3,3.5 bhittidvaye kṛtāṃ śuṣkāṃ klinnāṃ saṃyojya [koṭarīṃ] /",
  "SA18sghancsu:253": "[vipratipattito] nāśyaḥ saṃgrahe sati nānyadā //",
  "SA18sghancsu:254": "Śghs_3,3.6 adha ūrdhvaṃ trikhaṇḍāyā vinīlādhmātikāṃ ca na /",
  "SA18sghancsu:255": "na cāsthisaṃkalāṃ yāyāt nābhyaktāṃ rudhirādibhiḥ //",
  "SA18sghancsu:256": "Śghs_3,3.7 sitāsthisaṃkalāṃ śailadārupustamayīṃ[yatiḥ] /",
  "SA18sghancsu:257": "na ca gacchet striyaṃ yo 'tra virato maithunātsadā //",
  "SA18sghancsu:258": "Śghs_3,3.8 dhyānamiddhagataṃ mattamabhibhūtaṃ ca nidrayā /",
  "SA18sghancsu:259": "vikṣiptaṃ vedanātunnaṃ gṛhītvābhiniṣīdati //",
  "SA18sghancsu:260": "Śghs_3,3.9 ādimadhyāvasāneṣu svādayet dhyānavyutthitaḥ /",
  "SA18sghancsu:261": "vihārād ghaṭṭanīyaḥ so 'bhāve tu svādanasya na //",
  "SA18sghancsu:262": "Śghs_3,3.10 nānāvyaṃjana[ko]petarasaśālyupabhogavat /",
  "SA18sghancsu:263": "āsvādanā ca tailācchaśauṇḍāsavapānavat //",
  "SA18sghancsu:264": "Śghs_3,3.11 anāsvādo yuvagrīvāmṛtakukkurabandhavat /",
  "SA18sghancsu:265": "vijñeyaḥ sukumārasya pradīptalohasparśavat //",
  "SA18sghancsu:266": "avakrītādi[rajñānāt] /",
  "SA18sghancsu:267": "Śghs_3,3.12 [āpattibhāg yatirnaivonmattavikṣiptacetasaḥ] //",
  "SA18sghancsu:268": "Śghs_3,3.13 rāgā[manuṣyasaṃyogāt] praguṇībhūtāṃgajāta[kaṃ] /",
  "SA18sghancsu:269": "na spṛśet śukramokṣārthaṃ sa pṛthivyādidhātubhiḥ //",
  "SA18sghancsu:270": "Śghs_3,3.14 tiryak[pramatta]saṃyogāt śukramuktirbhaved yadi /",
  "SA18sghancsu:271": "[sva]mānasaṃ yatigarhet kṛtaṃ me nu virūpakaṃ //",
  "SA18sghancsu:272": "Śghs_3,3.15 majjajakṣaraṇaṃ yasya yateḥ svapneṣu jāyate /",
  "SA18sghancsu:273": "svapnaśukravinirmuktau taddoṣo na manāgapi //",
  "SA18sghancsu:274": "Śghs_3,3.16 rāgāviṣṭena cittena nārīṃ na śrīghanaḥ spṛśet /",
  "SA18sghancsu:275": "[anyaṃ spṛśettathārūpaṃ nāpi ca] puṃnapuṃsakaṃ //",
  "SA18sghancsu:276": "Śghs_3,3.17 stanakakṣauṣṭhanābhyūrupārśva kukṣimalabhramān /",
  "SA18sghancsu:277": "saṃraktaḥ [san] yatiḥ strīṇāṃ na nindet na ca saṃstuyāt //",
  "SA18sghancsu:278": "Śghs_3,3.18 yadyad vadet striyaṃ[tāvat] kartukāmo yathā yathā /",
  "SA18sghancsu:279": "tattat tathā tathā brūyāt śrīghano nāntike striyāḥ //",
  "SA18sghancsu:280": "Śghs_3,3.19 agrā bhavati sā yoṣid yā māṃ paricared rahaḥ /",
  "SA18sghancsu:281": "lābhinī cāyurādīnāṃ vyādhihīnā yaśasvinī //",
  "SA18sghancsu:282": "Śghs_3,3.20 ityādi na vaco brūyād rāgāgnipluṣṭamānasaḥ /",
  "SA18sghancsu:283": "purastācchroghanaḥ strīṇāṃ punapuṃsakayostathā //",
  "SA18sghancsu:284": "Śghs_3,3.21 vivāhāvāhayordautyaṃ na kuryāt śrāmaṇerakaḥ /",
  "SA18sghancsu:285": "[na ca kuryāt tathārūpanimittamapi dautyakaṃ] //",
  "SA18sghancsu:286": "Śghs_3,3.22 dāpayeyamimāṃ śrāddhāṃ tathāsmai dārikāmiti /",
  "SA18sghancsu:287": "arthasaṃsyandanāsūtraṃ ghaṭate na [sa] bhāṣituṃ //",
  "SA18sghancsu:288": "Śghs_3,3.23 bījārthaṃ na vratī dadyāt [svayameva] gavādikaṃ /",
  "SA18sghancsu:289": "etāneva parebhyo 'pi kadācinna [hi] prārthayet //",
  "SA18sghancsu:290": "Śghs_3,3.24 tulyametāsu tvaṃ tiṣṭha mā striyā caikayā vasa /",
  "SA18sghancsu:291": "ityevaṃ hi bahustrīkaṃ puruṣaṃ na yatirvadet //",
  "SA18sghancsu:292": "4 mṛṣāvādaviratiśikṣāpadaṃ",
  "SA18sghancsu:293": "Śghs_3,4.1 pratyekabuddhasaṃbuddhatacchiṣyajñānadarśanaṃ /",
  "SA18sghancsu:294": "mamāstīti bruvan mithyā nāśyo 'nyatrābhimānataḥ //",
  "SA18sghancsu:295": "Śghs_3,4.2 jñānaṃ satyābhisaṃbodhirabhijñāḥ paṃca darśanaṃ /",
  "SA18sghancsu:296": "dharmānvayādikajñānāṃgīkaraṇe kṣamo na saḥ //",
  "SA18sghancsu:297": "Śghs_3,4.3 āryamlecchavacolekhalipyā [ca] hastamudrayā /",
  "SA18sghancsu:298": "jñānādi pratijānīte boddhavyamapi tanmṛṣā //",
  "SA18sghancsu:299": "Śghs_3,4.4 vṛkṣamūle 'hamekākī viharāmi rame [gṛhe] /",
  "SA18sghancsu:300": "samāhitaṃ ca me cittaṃ na ca vācyamatīndriyaṃ //",
  "SA18sghancsu:301": "Śghs_3,4.5 buddhādīnāṃ vaded varṇamātmano na kathaṃcana /",
  "SA18sghancsu:302": "parakīyaṃ guṇaṃ pṛṣṭo brūyāttatsaṃmukhaṃ na tu //",
  "SA18sghancsu:303": "Śghs_3,4.6 dṛṣṭaṃ śrutaṃ mataṃ yadyad vijñātaṃ caiva tad vadet /",
  "SA18sghancsu:304": "[śrīghano] vaiparītyena gadanmithyābhidhāyakaḥ //",
  "SA18sghancsu:305": "Śghs_3,4.7 vastu cālīkasaṃjñī ca cittaṃ vinihitaṃ [tathā] /",
  "SA18sghancsu:306": "mṛṣāsaṃjñī vadedvācaṃ paṃcāṃgo 'nṛtavādikaḥ //",
  "SA18sghancsu:307": "Śghs_3,4.8 catustridvayeka[kai] raṃgairyukto yo 'tra mṛṣāṃ vadeta /",
  "SA18sghancsu:308": "anyaiḥ sa yatibhirjñeyo mṛṣāvādīti [śrīghanaḥ] //",
  "SA18sghancsu:309": "Śghs_3,4.9 abhūtenānidānena yatiḥ [prāṇivadhādinā] /",
  "SA18sghancsu:310": "dhvaṃsanacyāvanākūtaḥ saṃmukhaṃ na ca codayet //",
  "SA18sghancsu:311": "Śghs_3,4.10 kṣudrāpattinimittena leśamātreṇa tena vā /",
  "SA18sghancsu:312": "śrāmaṇero[hi] pratyakṣaṃ [śrīghanān] na kṣipet parān //",
  "SA18sghancsu:313": "Śghs_3,4.11 jātiliṃgakriyāvādair hīnamadhyottamairvratī /",
  "SA18sghancsu:314": "jihmaniṣpratibhānārthaṃ na prāṇān jātu codayet //",
  "SA18sghancsu:315": "Śghs_3,4.12 upakleśagadākrośāpattyādyairhi yatiṃ vratī /",
  "SA18sghancsu:316": "āśayena puroktena brūyānnaiva kadācana //",
  "SA18sghancsu:317": "Śghs_3,4.13 bhedaṃ yāsyati so 'nyena saṃdhāsyati mayā saha /",
  "SA18sghancsu:318": "yatira jātyādivādena paiśunyaṃ na samācaret //",
  "SA18sghancsu:319": "5 surāmaireyamadyapānaviratiśikṣāpadaṃ",
  "SA18sghancsu:320": "Śghs_3,5.1 madyaṃ surā ca maireyaṃ pramādasyāspadaṃ yataḥ /",
  "SA18sghancsu:321": "na parasmai[hi] taddeyaṃ na ca peyaṃ śvamūtravata //",
  "SA18sghancsu:322": "Śghs_3,5.2 valkalaiḥ saguḍaiḥ kācidaparā kevalena ca /",
  "SA18sghancsu:323": "piṣṭakiṇvajalairebhirapi saṃcīyate surā //",
  "SA18sghancsu:324": "Śghs_3,5.3 maireyaṃ guḍadhātryambudhātakīsaṃskṛtaṃ hi yat /",
  "SA18sghancsu:325": "kuśāgreṇāpi tat pātuṃ yatīnāṃ na prakalpate //",
  "SA18sghancsu:326": "Śghs_3,5.4 kodravānnaṃ na bhuñjīta tatpalāle ca na svapet //",
  "SA18sghancsu:327": "pītaṃ sata madayed yacca pātavyaṃ tadapīha na //",
  "SA18sghancsu:328": "6 uccaśayanamahāśayanaviratiśikṣāpadaṃ",
  "SA18sghancsu:329": "Śghs_3,6.1 śayane yatirāsīta jināṣṭāṃgulapādake /",
  "SA18sghancsu:330": "[vinā] śalyena[maṃce vā] hemarūpyakṛte na tu //",
  "SA18sghancsu:331": "Śghs_3,6.2 sāṃghike śayane dadyāt tat pratyāstaraṇaṃ yatiḥ /",
  "SA18sghancsu:332": "vastrakambalayoriṣṭaṃ yat tridvayekapuṭaṃ kramāt //",
  "SA18sghancsu:333": "Śghs_3,6.3 nyasya gartteṣu tatpādānatirekapramāṇakān /",
  "SA18sghancsu:334": "prakṣipya pratipādeṣu ṭaṃkitvā kīlakeṣu vā //",
  "SA18sghancsu:335": "Śghs_3,6.4 evaṃ vekṣuyavādīnāṃ rakṣārthaṃ maṃcake svapet /",
  "SA18sghancsu:336": "yatirna laṃbayetpādāvadhvago dīrghapādake //",
  "SA18sghancsu:337": "Śghs_3,6.5 alpaṃ ced dvādaśebhyo hi deyamekaṃ vihārakaṃ /",
  "SA18sghancsu:338": "nirmuṣṭahastaṃ svalpatve bahutve tu viparyayāt / //",
  "SA18sghancsu:339": "Śghs_3,6.6 stokaṃ ced navakaḥ pīṭhe vṛddho maṃce[tadā] svapet /",
  "SA18sghancsu:340": "svaptavyaṃ vṛkṣamūle ['pi] navenābhyavakāśake //",
  "SA18sghancsu:341": "Śghs_3,6.7 antarvarṣāsu nopasthāpyo 'nyaḥ sabrahmacārikaḥ /",
  "SA18sghancsu:342": "yatinā [sva] vihāre[tu] yathāvṛddhikayā yatiḥ //",
  "SA18sghancsu:343": "Śghs_3,6.8 saṃskāraparibhogārthaṃ paripālanārthameva ca /",
  "SA18sghancsu:344": "uddiśyate [yatibhyo vai] sāṃghikaṃ śayanāsanaṃ //",
  "SA18sghancsu:345": "Śghs_3,6.9 hīnamadhyottamaṃ [sthāpyaṃ bhikṣubhyo] layanatrayaṃ /",
  "SA18sghancsu:346": "vṛddhādyāgantukebhyastaduddiśeddaharakramāt //",
  "SA18sghancsu:347": "Śghs_3,6.10 śayanāsanamatyuccaṃ pratiṣiddhaṃ yaterhi tat /",
  "SA18sghancsu:348": "madauddhatyakaraṃ yasmād lokāvadhyānakāraṇaṃ //",
  "SA18sghancsu:349": "7 nṛtyagītavāditraviratiśikṣāpadaṃ",
  "SA18sghancsu:350": "Śghs_3,7.1 bāhuvikṣepakaṃ nṛtyaṃ gītamuccaiḥ svareṇa ca /",
  "SA18sghancsu:351": "vīṇāvaṃśamṛdaṃgādivāditraṃ na ca vādayet //",
  "SA18sghancsu:352": "8 gandhamālyavilepanaviratiśikṣāpadaṃ",
  "SA18sghancsu:353": "Śghs_3,8.1 candanādika[gandhaṃ hi dhārayed] vyādhito yatiḥ /",
  "SA18sghancsu:354": "dattvā [ca] munaye pūrvaṃ bhiṣagādervacanena [saḥ] //",
  "SA18sghancsu:355": "Śghs_3,8.2 na tiṣṭhet prakaṭe deśe kṣālayitvā bahirvrajet /",
  "SA18sghancsu:356": "anenaiva vidhānena dhārayet kusumasrajaṃ //",
  "SA18sghancsu:357": "Śghs_3,8.3 netraduḥkhaśiraḥśūlapūtanāgraharugvataḥ /",
  "SA18sghancsu:358": "mālayā veṣṭayet śīrṣaṃ mekhalāṃ na ca laṃbayet //",
  "SA18sghancsu:359": "Śghs_3,8.4 haritālādicūrṇena tailena vā sugandhinā /",
  "SA18sghancsu:360": "na vadanādikaṃ gātraṃ varṇārthaṃ marṣayed yatiḥ //",
  "SA18sghancsu:361": "Śghs_3,8.5 yaterapratirūpatvād gandhamālya[vilepanaṃ] /",
  "SA18sghancsu:362": "rāgauddhatyakaraṃ yasmāt tasmāttad garhitaṃ jinaiḥ //",
  "SA18sghancsu:363": "Śghs_3,8.6 na darpaṇe nirīkṣeta mukhaṃ vā tailabhājane /",
  "SA18sghancsu:364": "muktvānyenekṣaṇīyaṃ[hi] śirovyathāgadāturaṃ //",
  "SA18sghancsu:365": "Śghs_3,8.7 vibhūṣaṇāya tailenātmano nābhyaṃjayed mukhaṃ /",
  "SA18sghancsu:366": "sphuṭitāsyaśirorogādanyenābhyaṃjanaṃ na ca //",
  "SA18sghancsu:367": "Śghs_3,8.8 na kuṃkumādicūrṇena maṇḍayed vadanaṃ yatiḥ /",
  "SA18sghancsu:368": "piṭakaśamanārthaṃ tu lepa iṣṭastilā[dibhiḥ] //",
  "SA18sghancsu:369": "9 vikālabhojanaviratiśikṣāpadaṃ",
  "SA18sghancsu:370": "Śghs_3,9.1 rātreranyatra[bhuṃjāne mayi babhūvālparogatā] /",
  "SA18sghancsu:371": "tathaiva [khalu] vaḥ kāryaṃ [bhoktavyaṃ dinayevaca] //",
  "SA18sghancsu:372": "Śghs_3,9.2 viṇmūtragarta[ke] pātaḥ caurāhibhiḥ samāgamaḥ /",
  "SA18sghancsu:373": "udarārthaṃ gṛhe no 'ṭantītyavadhyātavān janaḥ //",
  "SA18sghancsu:374": "Śghs_3,9.3 sāyaṃ prātaśca piṇḍārthamaṭanti bhuṃjate [tathā] /",
  "SA18sghancsu:375": "sabhācatvaraśrṛṃgāṭamandireṣu gṛheṣu ca //",
  "SA18sghancsu:376": "Śghs_3,9.4 sugataḥ prāha bhuṃjīta kāle yatiḥ //",
  "SA18sghancsu:377": "uditādityamadhyāhnakeśamātrānatītake //",
  "SA18sghancsu:378": "Śghs_3,9.5 sakturodanakulmāṣaṃ matsya- māṃsaṃ ca kālikaṃ /",
  "SA18sghancsu:379": "yāvajjīvikatailādipippalīpānavarjitaṃ //",
  "SA18sghancsu:380": "Śghs_3,9.6 yatkiṃcidadyate dantairgalake vā praveśyate /",
  "SA18sghancsu:381": "kukṣiviṣṭabhmakaṃ kāle tattadadyādyathodite //",
  "SA18sghancsu:382": "Śghs_3,9.7 saktvādyāmiṣanirmuktaṃ nīrajaṃ kardamādikaṃ /",
  "SA18sghancsu:383": "varṣopalakamaśnīyāt pipāsārtto yatirhimaṃ //",
  "SA18sghancsu:384": "Śghs_3,9.8 kalpyavārigrahe tāvat prakṣālyau na [saśoṇitau] /",
  "SA18sghancsu:385": "hastau dvau cāṃgulīkṣāle na grāhyaṃ kalpikodakaṃ //",
  "SA18sghancsu:386": "Śghs_3,9.9 māyāśāṭhaya[yutaḥ] kuryāt na ca prakṣālanaṃ tayoḥ /",
  "SA18sghancsu:387": "saśabdau [yadi] tau śuddhau vedyau snigdhatvaco yateḥ //",
  "SA18sghancsu:388": "Śghs_3,9.10 na dāsyatha[mahyaṃ] bhoktuṃ kṣuttṛṣṇāpīḍito [mriye] /",
  "SA18sghancsu:389": "ityevaṃ [sa] viruktaḥ syāt kṣeptavyo maṇḍakuṇḍa[ke] //",
  "SA18sghancsu:390": "Śghs_3,9.11 aṣṭāsu dhautadhānyaṃ yat pātre diśedanāmiṣe /",
  "SA18sghancsu:391": "sphuṭaṃ tu yadi pātuṃ tannaiva glānāya kalpate //",
  "SA18sghancsu:392": "Śghs_3,9.12 lobhotyāpitavākkāyakarmaṇā samupārjitaṃ /",
  "SA18sghancsu:393": "vihāracīvarāhāraṃ varjayed viṣabhaktavat //",
  "SA18sghancsu:394": "Śghs_3,9.13 madyaśastraviṣaprāṇilākṣavikrayaṇaṃ vratī /",
  "SA18sghancsu:395": "na kārayet na kuryānna jīvikāṃ tena kalpayet //",
  "SA18sghancsu:396": "Śghs_3,9.14 satkārārthaṃ [ca lābhārtha] kuhanā hyakṣasaṃvaraḥ /",
  "SA18sghancsu:397": "vastrādikasya prāptayarthaṃ lapanā cāṭuvāditā //",
  "SA18sghancsu:398": "Śghs_3,9.15 naiṣpeṣikatvamannādi-lābhāya parakutsanaṃ /",
  "SA18sghancsu:399": "anyadīyasya pātrādernaimittikaṃ [tu] varṇanaṃ //",
  "SA18sghancsu:400": "Śghs_3,9.16 lābhena lipsā lābhānāṃ vṛddhiṣaryeṣaṇaṃ ca [yat] /",
  "SA18sghancsu:401": "yatirvivarjayedetān mithyājīvān purīṣavat //",
  "SA18sghancsu:402": "Śghs_3,9.17 krīḍāparopaghātaṃ ca kāyavāgucchitaṃ [sadā] /",
  "SA18sghancsu:403": "vratī vivarjayennityaṃ viṭpradigdhamivoragaṃ //",
  "SA18sghancsu:404": "Śghs_3,9.18 vipaṇitaragulmādau dyūtabandhagṛhe tathā /",
  "SA18sghancsu:405": "agocaro yadākhyātastiṣṭhettatra na cellakaḥ //",
  "SA18sghancsu:406": "10 jātarūparajatapratigrahaṇaviratiśikṣāpadaṃ",
  "SA18sghancsu:407": "Śghs_3,10.1 kāyena hastapādābhyāṃ vastrachatrādibhirvratī /",
  "SA18sghancsu:408": "rajataṃ jātarūpaṃ ca na spṛśet jvalitāgnivat //",
  "SA18sghancsu:409": "iti saṃghasenena saṃvihitoddhāre śrīghanācārasaṃgrahe śrāmaṇerabhāvopāyo nāma tṛtīyo 'dhyāya //",
  "SA18sghancsu:410": "caturtho 'dhyāyaḥ",
  "SA18sghancsu:411": "anye cācārāḥ",
  "SA18sghancsu:412": "Śghs_4.1 campūkalahadantādakāṣṭho vṛddhāntiko yatiḥ /",
  "SA18sghancsu:413": "snānapānāśanastotravyagro nagnaikavastra[kaḥ] //",
  "SA18sghancsu:414": "Śghs_4.2 mṛtkarmavyāpṛtas tūrṇaṃ gacchan [ca] dvitribhūmikaṃ /",
  "SA18sghancsu:415": "āśu vrajan pacan pātraṃ vyagraś cīvarakarmaṇā //",
  "SA18sghancsu:416": "Śghs_4.3 cūrṇacailakriyāsakto 'ktākṣo[ca] dhūmramāpiban /",
  "SA18sghancsu:417": "likhan yo pustakaṃ vāpi yo vācayati so 'pi na //",
  "SA18sghancsu:418": "Śghs_4.4 viṭprasrāvakuṭīṃ gacchan tiṣṭhan tamasi voddiśan /",
  "SA18sghancsu:419": "vāsayannatha prāvṛṇvana na vandyo yatinā yatiḥ //",
  "SA18sghancsu:420": "Śghs_4.5 avaguṇṭhitaśīrṣeṇa sopānatkena jānunoḥ /",
  "SA18sghancsu:421": "muṇḍasphoṭaṃ hi jaṃghāyāṃ na dadyādavinā yathā //",
  "SA18sghancsu:422": "Śghs_4.6 samavasthāniṣaṇṇena vandyamānena padyuge /",
  "SA18sghancsu:423": "gṛhītvā karkaṭagrāhaṃ vācyamārogyamastviti //",
  "SA18sghancsu:424": "Śghs_4.7 bhikṣuvinayasaṃkṣepādācārāntaramuddhṛtaṃ /",
  "SA18sghancsu:425": "śrotavyo 'nyadupādhyāyād bhāvyaṃ sagauraveṇa ca //",
  "SA18sghancsu:426": "Śghs_4.8 śatadvayena saṃhatya śrīghanācāra saṃgrahaṃ /",
  "SA18sghancsu:427": "sukṛtaṃ karma yattena jano prāpnotvasaṃskṛtaṃ //",
  "SA18sghancsu:428": "iti saṃghasenena saṃvihitoddhāre śrīghanācārasaṃgrahe",
  "SA18sghancsu:429": "anye cācārā nāma caturtho 'dhyāyaḥ //",
  "SA18sghancsu:430": "iti śrīghanācārasaṃgrahaḥ //"
}