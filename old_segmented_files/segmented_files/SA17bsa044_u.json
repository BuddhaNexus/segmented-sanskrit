{
  "SA17bsa044_u:0": "Kriyāsaṃgrahakārikā",
  "SA17bsa044_u:1": "parīkṣā guruśiṣyāṇāṃ guroradhyeṣaṇā tataḥ /",
  "SA17bsa044_u:2": "mantrasevāṃ guruḥ kuryāt tato bhūmeḥ parīkṣaṇam // 1 //",
  "SA17bsa044_u:3": "devatāyogayuktaḥ san mahīpūjāṃ vidhāya ca /",
  "SA17bsa044_u:4": "devatotthāpanaṃ kṛtvā śodhayenmedinīṃ tataḥ // 2 //",
  "SA17bsa044_u:5": "yavānāṃ ropaṇaṃ kṛtvā jāṅgulī cāpi pūjayet /",
  "SA17bsa044_u:6": "sūtraṃ saṃpātya yatnena vāstunāgaṃ parīkṣayet // 3 //",
  "SA17bsa044_u:7": "iṣṭakālakṣaṇaṃ samyag jñātvādigrahaṇaṃ tataḥ /",
  "SA17bsa044_u:8": "samyagāyavyayau jñātvā prāsādasya ca lakṣaṇam // 4 //",
  "SA17bsa044_u:9": "devadikpālavasudhāḥ sampūjya ca yathāvidhi /",
  "SA17bsa044_u:10": "ītikāropaṇaṃ kṛtvā homaṃ kuryāt pramohanam // 5 //",
  "SA17bsa044_u:11": "vanayātrā tato dvāraṃ samyagutthāpayetsudhīḥ /",
  "SA17bsa044_u:12": "saṃsthāpya ca śirodāru juhuyādamṛtānalam // 6 //",
  "SA17bsa044_u:13": "vajrācāryapraveśo 'smin samādhitrayabhāvanā /",
  "SA17bsa044_u:14": "parikramārthasūtrāṇāṃ pātanaṃ rajasāmapi // 7 //",
  "SA17bsa044_u:15": "agnikriyāvidhānaṃ ca piṇḍikāsthāpanaṃ tataḥ /",
  "SA17bsa044_u:16": "savyakṣaṇena niṣpādya pratimāṃ sthāpayettataḥ // 8 //",
  "SA17bsa044_u:17": "citrakarma valiḥ piṇḍī gaṇḍikālakṣaṇaṃ tataḥ /",
  "SA17bsa044_u:18": "eteṣāṃ ca pratiṣṭhānaṃ pravrajyāgrahaṇaṃ tathā // 9 //",
  "SA17bsa044_u:19": "lakṣaṇaṃ dharmadhātūnāṃ dhvajānāmavaropaṇam /",
  "SA17bsa044_u:20": "jīrṇoddhāropasaṃhārau pūjayed gaṇamaṇḍalam // 10 //",
  "SA17bsa044_u:21": "/ kriyāsaṃgrahakārikā samāptā //",
  "SA17bsa044_u:22": "/ kṛtiriyaṃ nāgārjunapādānām //"
}