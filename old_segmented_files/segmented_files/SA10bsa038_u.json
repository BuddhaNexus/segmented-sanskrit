{
  "SA10bsa038_u:0": "Sūtrārthasamuccayopadeśaḥ",
  "SA10bsa038_u:1": "namo ratnatrayāya",
  "SA10bsa038_u:2": "saṃdṛśya gambhīramudāramabdhyākāśopamaṃ sūtrasumātṛkāṃ ca /",
  "SA10bsa038_u:3": "śrīmadgurorāsyasamudgatārthān duṣprāpaṇīyāṃn vilikhāmi cāham // 1 //",
  "SA10bsa038_u:4": "atra bodhisattvānāṃ ratnopamāḥ pañcāśad dharmāḥ prāṇopamādayaḥ /",
  "SA10bsa038_u:5": "tān abhidhāsye kiñcit / tadyathā-",
  "SA10bsa038_u:6": "āyurjīvitamādhāra ūṣmavijñānayorhi yaḥ / 2 a ba /",
  "SA10bsa038_u:7": "yathā sattvāḥ prāṇeṣu snihyantaḥ prāṇāṃścāśrayante,",
  "SA10bsa038_u:8": "tathā bodhisattvā api prāṇopamabodhicitte snihyantastadāśrayante /",
  "SA10bsa038_u:9": "mātāpitṛsamo dharmastu śūnyatā-karuṇe /",
  "SA10bsa038_u:10": "tadanotpāde na bodhisattvasambhavaḥ /",
  "SA10bsa038_u:11": "gṛhiṇīvat mṛti-śikṣā-karmaṇisaṃcitisaṃjñāni ahorātraṃ triḥ samāgamaḥ /",
  "SA10bsa038_u:12": "gṛhavad daśa kuśalāni /",
  "SA10bsa038_u:13": "imāmi tu gṛhameva durgatidvārapidhānāt /",
  "SA10bsa038_u:14": "dhanopamāni āryasaptadhanāni,",
  "SA10bsa038_u:15": "alpecchatā,",
  "SA10bsa038_u:16": "saṃtoṣaśca /",
  "SA10bsa038_u:17": "mitravat tridhātuprayogaṃ kurvannapi nirvāṇāśayatā,",
  "SA10bsa038_u:18": "vipuladāne 'pi vipākanirapekṣatā,",
  "SA10bsa038_u:19": "sarvadharmānutpādajñāne 'pi karmavipākānutsargaḥ,",
  "SA10bsa038_u:20": "sarvadharmanairātmyajñāne 'pi sattveṣu karuṇotpādaḥ /",
  "SA10bsa038_u:21": "mūlasamāḥ śraddhā,",
  "SA10bsa038_u:22": "śravaṇaṃ,",
  "SA10bsa038_u:23": "tyāgaḥ , kṣāntiśca /",
  "SA10bsa038_u:24": "kṣetropamaṃ śīlam /",
  "SA10bsa038_u:25": "bandhusamāḥ daśapāramitāḥ /",
  "SA10bsa038_u:26": "ācāryopamāstu ṣaḍanusmṛtayaḥ /",
  "SA10bsa038_u:27": "upādhyāyopamāstu āryakāśyapa-paripṛcchāsūtre bodhicittāvismaraṇāya catvāro dharmāḥ /",
  "SA10bsa038_u:28": "śreṣṭhisamāḥ śikṣāsamuccaye caturdaśāpakārapratipakṣāḥ /",
  "SA10bsa038_u:29": "bhaginīsamāni caturapramāṇāni /",
  "SA10bsa038_u:30": "dāsopamāni catuḥsaṃgrahavastūni /",
  "SA10bsa038_u:31": "prajopamastu śva-dāsa-cāṇḍālavadahaṅkāra-nāśaḥ /",
  "SA10bsa038_u:32": "netropame tu āśayādhyāśayaviśuddhī /",
  "SA10bsa038_u:33": "dhātrīsamaṃ kalyāṇamitram /",
  "SA10bsa038_u:34": "rājopamaṃ triratnam /",
  "SA10bsa038_u:35": "toyasaṃkāropamā trimaṇḍalapariśuddhiḥ /",
  "SA10bsa038_u:36": "mārgadarśakasamāḥ smṛti-samprajanya-yoniśomanasikārāpramādāḥ,",
  "SA10bsa038_u:37": "caturviparyāsapratipakṣasevanañca /",
  "SA10bsa038_u:38": "carrnavat sattvāparityāgānugrahau /",
  "SA10bsa038_u:39": "alaṅkāropamāḥ śraddhā,",
  "SA10bsa038_u:40": "śīlaṃ,",
  "SA10bsa038_u:41": "tyāgaḥ,",
  "SA10bsa038_u:42": "śrutaṃ, prajñā ca /",
  "SA10bsa038_u:43": "vyādhipīḍopamaṃ tu ādhyātmikabāhyavastvabhiniviṣṭacittam /",
  "SA10bsa038_u:44": "hatacittapuruṣavat gṛhastho bodhisattva evaṃ vicārayati- kadāhaṃ brahmacārī bhaveyam /",
  "SA10bsa038_u:45": "pravrajita evaṃ cintayati- kadāhaṃ jagato duḥkhāni moktuṃ kṣama iti /",
  "SA10bsa038_u:46": "kusīdopamaṃ gṛhasthena kṣetrādīnām aparityāgaḥ /",
  "SA10bsa038_u:47": "pravrajitena dauḥśīlyādīnāmaprahāṇam /",
  "SA10bsa038_u:48": "śīlaskandhasūtre- 'bhikṣavaḥ,",
  "SA10bsa038_u:49": "pravrajitena hastiyuddhadarśanamapi mithyājīva iti uktam /",
  "SA10bsa038_u:50": "susvabhāvopamo yoniśomanasikāravān /",
  "SA10bsa038_u:51": "mūkopamaḥ paradoṣa-bhrāntyanākhyātā,",
  "SA10bsa038_u:52": "svaguṇānākhyātā,",
  "SA10bsa038_u:53": "aparanindakaśca /",
  "SA10bsa038_u:54": "andhopamo 'paradoṣadraṣṭā /",
  "SA10bsa038_u:55": "gṛhītacauropamaḥ saddharmavināśe saddharmagrāhakaḥ /",
  "SA10bsa038_u:56": "bālopamaḥ suvāk,",
  "SA10bsa038_u:57": "sphūrtimān,",
  "SA10bsa038_u:58": "sukhadaḥ,",
  "SA10bsa038_u:59": "sutoṣaḥ,",
  "SA10bsa038_u:60": "supoṣaḥ,",
  "SA10bsa038_u:61": "subharaḥ,",
  "SA10bsa038_u:62": "santuṣṭaśca /",
  "SA10bsa038_u:63": "dūtopamastu bodhisattvo bahvartho bahukriya udāracittaśca /",
  "SA10bsa038_u:64": "amātyopamo dṛḍhapratijñaḥ /",
  "SA10bsa038_u:65": "paṇḍitopamo 'pratihatasattvaḥ pratyupakārī ca /",
  "SA10bsa038_u:66": "śiṣyopamastu trirdivā triśca rātrau guruparyupāsakaḥ,",
  "SA10bsa038_u:67": "kṛtapuṇyasambhārasañcayaḥ saṃvarapoṣakaśca /",
  "SA10bsa038_u:68": "pratyutthāpakopamaḥ sarvasattvabuddhatvaprāpaṇapūrvam svabuddhatvakāmaḥ /",
  "SA10bsa038_u:69": "andhanāyakopamaḥ svabuddhabhāvapūrva parārthakriyāḥ /",
  "SA10bsa038_u:70": "prathamakalpamanuṣyopama ācaraṇa-śīla-jīvikā-vidhi-dṛṣṭisampannaḥ /",
  "SA10bsa038_u:71": "sakāmapuruṣopamaḥ samastacaryāpathaparārthapariṇāmanaḥ,",
  "SA10bsa038_u:72": "yathā- 'āryaratnameghasūtroktam' /",
  "SA10bsa038_u:73": "andhakāropamo mahāmadhyamakārthanityavāsaḥ /",
  "SA10bsa038_u:74": "ghātakopamastyaktamithyādṛṣṭyutpādaḥ /",
  "SA10bsa038_u:75": "cauropamaḥ tyaktapramādānādaraḥ /",
  "SA10bsa038_u:76": "śatrūpamastu ahrīpramādaḥ /",
  "SA10bsa038_u:77": "mūrkhopamaḥ smṛti-samprajanyavirahitaḥ /",
  "SA10bsa038_u:78": "mattopamaḥ catuḥkṛṣṇaḥ /",
  "SA10bsa038_u:79": "tiryagupamo 'jñātaśikṣānayaḥ /",
  "SA10bsa038_u:80": "vadhikopamo niṣkaruṇācāraḥ /",
  "SA10bsa038_u:81": "akṛtajñopamastyaktaprātimokṣasaṃvaraḥ /",
  "SA10bsa038_u:82": "anāthopama upāyakauśalyarahitaḥ /",
  "SA10bsa038_u:83": "unmattopamaḥ kāryākāryānabhijñatā /",
  "SA10bsa038_u:84": "mārābhibhūtopamaḥ pañca-pañcāśad-dvātriṃśadāntarāyikadharmāmabhijñatā /",
  "SA10bsa038_u:85": "ke ca (te) pañcapañcāśad?",
  "SA10bsa038_u:86": "'āryabodhisattvapiṭake' tadyathā- āntarāyika eko dharmaḥ- pramādaḥ /",
  "SA10bsa038_u:87": "āntarāyikau dvau dharmau-ahrīkyam anapatrāpyañca /",
  "SA10bsa038_u:88": "trayaḥ- rāgo dveṣo mohaśca /",
  "SA10bsa038_u:89": "catvāraḥ- catasraḥ asadgatayaḥ /",
  "SA10bsa038_u:90": "pañcaprāṇātipāto 'dattādānam kāmamithyācāro mṛṣāvādo madyapānaṃ ca /",
  "SA10bsa038_u:91": "ṣaḍ-buddha-dharma-saṃgha-śīla-ācārya-jyeṣṭhānādaraḥ /",
  "SA10bsa038_u:92": "sapta- saptavidhā mānāḥ /",
  "SA10bsa038_u:93": "aṣṭau-mithyāṣṭakam /",
  "SA10bsa038_u:94": "nava- navadhā cittāghātavastūni /",
  "SA10bsa038_u:95": "daśa- daśākuśalāni iti prāptam /",
  "SA10bsa038_u:96": "dvātriṃśad āntarāyikā dharmā api 'āryamahāyānopadeśasūtre' tadyathā- 'putri/",
  "SA10bsa038_u:97": "mahāyānāntarāyikā dharmāstu dvātriṃśat /",
  "SA10bsa038_u:98": "tairāntarāyikaiḥ sarvajñatāyāṃ śīghraṃ na niryāṇaṃ bhavati /",
  "SA10bsa038_u:99": "ke ca dvātriṃśat?",
  "SA10bsa038_u:100": "tadyathā- śrāvakapratyekabuddhayānakāmitā,",
  "SA10bsa038_u:101": "indrabrahmatvakāmitā,",
  "SA10bsa038_u:102": "janmasaṃsthabrahmacaryam,",
  "SA10bsa038_u:103": "kuśalamūlaikarāgaḥ,",
  "SA10bsa038_u:104": "bhogasampatmātsaryam,",
  "SA10bsa038_u:105": "sattvaviṣamadānam,",
  "SA10bsa038_u:106": "śīlaśaithilyam,",
  "SA10bsa038_u:107": "paracittārakṣaṇam,",
  "SA10bsa038_u:108": "vyāpāda-pratighānuśayaḥ,",
  "SA10bsa038_u:109": "taccittalayaḥ,",
  "SA10bsa038_u:110": "muṣitasmṛtitā,",
  "SA10bsa038_u:111": "śravaṇānarthikatā,",
  "SA10bsa038_u:112": "avicāraṇā,",
  "SA10bsa038_u:113": "anāryacaryā,",
  "SA10bsa038_u:114": "mānātimānavivṛddhiḥ,",
  "SA10bsa038_u:115": "kāya-vāk-citta-karmāpariśuddhiḥ,",
  "SA10bsa038_u:116": "saddharmāparirakṣaṇam,",
  "SA10bsa038_u:117": "ācāryadharmapraticchādanam,",
  "SA10bsa038_u:118": "saṃgrahavastūtsargaḥ,",
  "SA10bsa038_u:119": "sammodanīyadharmatyāgaḥ,",
  "SA10bsa038_u:120": "pāpamitrasevanam,",
  "SA10bsa038_u:121": "bodhyapariṇāmaneti triskandhavipakṣatā,",
  "SA10bsa038_u:122": "alpakuśalamūlamanyanā,",
  "SA10bsa038_u:123": "anupāyapatitabuddhiḥ,",
  "SA10bsa038_u:124": "parāṅmukhībhūya triratnāśaṃsanam,",
  "SA10bsa038_u:125": "bodhisattvavyāpādacintanam /",
  "SA10bsa038_u:126": "aśrutadharmaprahāṇam,",
  "SA10bsa038_u:127": "mārakarmānavabodhaḥ,",
  "SA10bsa038_u:128": "lokāyatamantragrahaṇam,",
  "SA10bsa038_u:129": "sattvāparipācanam,",
  "SA10bsa038_u:130": "saṃsārādaparikheda', iti /",
  "SA10bsa038_u:131": "'putri/ dvātriṃśad ime mahāyānasya āntarāyikāḥ samyak vyapadiṣṭāḥ /",
  "SA10bsa038_u:132": "tairantarāyaiḥ sarvajñatā' niḥsaraṇam /",
  "SA10bsa038_u:133": "kiṃ tarhi? tathāpi putri,",
  "SA10bsa038_u:134": "yāvanto hi mahāyānaguṇā antarāyā api tāvantastāvad ityuktam /",
  "SA10bsa038_u:135": "api ca, aprameyā antarāyadharmā bahuṣu sūtreṣu dṛśyante,",
  "SA10bsa038_u:136": "kintu atra granthagauravāt na nirupyante /",
  "SA10bsa038_u:137": "etanmārgasthīkṛtādikarmikabodhisattvaistattatsūtreṣu draṣṭavyam,",
  "SA10bsa038_u:138": "āsthitaye ca prayatitavyam /'",
  "SA10bsa038_u:139": "aparāṇyapi sāṃkathyāni bahūni vartante-sughoraparuṣaṃ suduḥsahaṃ dukhaṃ ciraṃ sahyata idamapi mahadāścaryam /",
  "SA10bsa038_u:140": "caturoghavikṣiptaṃ paunaḥpunyena kaṅkālayānārohaṇaṃ tadapi mahadāścaryam /",
  "SA10bsa038_u:141": "bhāryā gṛhaṃ ca prahāya suvratādāne 'pi sadā kāyavāṅmanovikṣepa idamapi mahadāścaryam /",
  "SA10bsa038_u:142_0": "svalpamātrasyāpi kuśalamūlasya abhāve 'pi tasyaivārthato buddhajñānagaveṣaṇam idamapi",
  "SA10bsa038_u:142_1": "mahadāścaryam pratimokṣaśikṣābhāve 'pi- mahāyānaśreṣṭhabodhidvayagaveṣaṇam idamapi mahadāścaryam /",
  "SA10bsa038_u:143": "ityādiṣu mahāścaryeṣu bahuṣvapi satsu,",
  "SA10bsa038_u:144": "jambūdvīpapuruṣasya vikalpācārāḥ kathaṃ vaktuṃ śakyante /",
  "SA10bsa038_u:145": "tasmād bhavanto muktikāmā vidvāṃsastairunmattaiḥ saha akṛtasaṃsargā apramattās tiṣṭhantu /",
  "SA10bsa038_u:146": "evaṃ te karuṇāviṣayatvavyatiriktāḥ uttamamārgavyapadeśe 'pi tatra na praviśanti,",
  "SA10bsa038_u:147": "kimahaṃ karavāṇi /",
  "SA10bsa038_u:148": "yāvad abhijñatā na prāpyate tāvad anyeṣāṃ vipākāsaṃbhavāt khaḍgavat sthātavyam /",
  "SA10bsa038_u:149": "sadgururgaveṣaṇīyaḥ,",
  "SA10bsa038_u:150": "sadā sūtrāṇi ca draṣṭavyāni /",
  "SA10bsa038_u:151": "sūtrasamuccayopadeśo mahāvidvadācāryadīpaṅkaraśrījñāna-viracitaḥ samāptaḥ //",
  "SA10bsa038_u:152": "tenaiva bhāratīyamahopādhyāyena mahāsaṃśodhakalokacakṣuṣā jayaśīlena (chul khrimas rgyal va)",
  "SA10bsa038_u:153": "ca anūdya sampādya ca nirṇītaḥ //"
}