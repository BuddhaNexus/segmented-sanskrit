{
  "SA10bsa036_u:0": "Śaraṇagamanadeśanā",
  "SA10bsa036_u:1": "namo ratnatrayāya",
  "SA10bsa036_u:2": "tryapāyapañcayonīnāṃ sarvaduḥkhavighātakam /",
  "SA10bsa036_u:3": "śreyo 'bhyudayasaukhyānāṃ dātāraṃ praṇamāmi tam // 1 //",
  "SA10bsa036_u:4": "atra śaraṇagamanamabhidhāsye / samāsataḥ /",
  "SA10bsa036_u:5": "adhiṣṭhānasthitī cintā kālaprakṛtimānakam /",
  "SA10bsa036_u:6": "nayaḥ śikṣā niruktiśca karmaupamyavibhaktayaḥ /",
  "SA10bsa036_u:7": "ādīnavārthaśaṃsāśca proktāḥ pañcadaśa kramāt // 2 //",
  "SA10bsa036_u:8": "tatra adhiṣṭhānapudgalastu dvividhaḥ- mahāyānagotrīyo hīnayānagotrīyaśca /",
  "SA10bsa036_u:9": "sthitirdvividhā- mahā-hīna-yānabhedataḥ /",
  "SA10bsa036_u:10": "tatraivaṃ hi tāvad mahāyānaśāstreṣu ratnatrayam- tathatāratnatrayam,",
  "SA10bsa036_u:11": "abhisamayaratnatrayaṃ,",
  "SA10bsa036_u:12": "sammukhasthaṃ ca ratnatrayam /",
  "SA10bsa036_u:13": "taccaivam- jñeyāviparyastajñānam,",
  "SA10bsa036_u:14": "nirvikalpādvayajñānam,",
  "SA10bsa036_u:15": "dharmadhātvavasthitatvaṃ ca /",
  "SA10bsa036_u:16": "tadeva viśuddha-dharmadhātuprajñāpāramitā,",
  "SA10bsa036_u:17": "samāhitāvasthāyāṃ gaganatalavat samastadharmasākṣātkāriṇyāṃ mahābhūmau avasthitāḥ bodhisattvāśca (tathatāratnatrayam) /",
  "SA10bsa036_u:18": "atha caivaṃ- dvividho rupakāyaḥ ,",
  "SA10bsa036_u:19": "santānāvasthitāścatuḥsatya-saptatriṃśadbodhipākṣikadharma-bhūmi-pāramitādayo dharmāḥ,",
  "SA10bsa036_u:20": "prayogamārgīyāśca bodhisattvāḥ /",
  "SA10bsa036_u:21": "punaścaivam- citrāṅkitatotkīrṇaniṣiktamṛṇmayādi (buddhapratimādi)",
  "SA10bsa036_u:22": "- navāṅgapravacanamayapothīpustakādi,",
  "SA10bsa036_u:23": "saṃbhāramārgīyāśca bodhisatvāḥ /",
  "SA10bsa036_u:24": "hīnayānaśāstraṃ tāvat-",
  "SA10bsa036_u:25": "buddhasaṃghakarāndharmān aśaikṣānubhayāṃśca saḥ /",
  "SA10bsa036_u:26": "nirvāṇaṃ ceti śaraṇaṃ yo yāti śaraṇatrayam // 3 // iti /",
  "SA10bsa036_u:27": "tatra āśayo mahāyānināntu aśeṣasattvārthacintanam /",
  "SA10bsa036_u:28": "itarasya ca ātmārthameva cintanam /",
  "SA10bsa036_u:29": "tatra avadhirmahāyānināntu bodhimaṇḍaparyantam /",
  "SA10bsa036_u:30": "itarasya tu yāvajjīvanaṃ pratijñā /",
  "SA10bsa036_u:31": "tatra svabhāvo hrī-apatrapāyuktatā avijñaptpādaśca /",
  "SA10bsa036_u:32": "tatra mānaṃ tu svīkaraṇam,",
  "SA10bsa036_u:33": "śaraṇakaraṇaṃ vijñaptyutpādaśca /",
  "SA10bsa036_u:34": "tatra nayastu śaraṇagamanavidhiḥ /",
  "SA10bsa036_u:35": "sa ca guroravagantavyaḥ /",
  "SA10bsa036_u:36": "tatra śikṣā sādhāraṇī asādhāraṇī ca gurupādebhyo jñeyā /",
  "SA10bsa036_u:37": "tatra niruktistu dāsabhāvaḥ taditarasvāminamananviṣya śaraṇagamanam /",
  "SA10bsa036_u:38": "tatra kāritraṃ tu bodhicittamahāvṛkṣotpādasya mūlatvam,",
  "SA10bsa036_u:39": "mokṣamahānagarasya praveśadvāratvam,",
  "SA10bsa036_u:40": "upavāsādisarvasaṃvarāṇām āśrayatvam /",
  "SA10bsa036_u:41": "tatraupamyaṃ tāvad rājñaḥ mantriṇo vā prajāgaṇasya tadvacanānatikramaṇam,",
  "SA10bsa036_u:42": "tadārādhanamiva ca /",
  "SA10bsa036_u:43": "tatra bhedastu sādhāraṇāsādhāraṇatvena viśiṣṭaḥ /",
  "SA10bsa036_u:44": "tatra ādīnavau dvau /",
  "SA10bsa036_u:45": "śaraṇacyutirajñānaṃ vā /",
  "SA10bsa036_u:46": "cyavanaṃ cyutirvā yathā candrakīrtipādānām-",
  "SA10bsa036_u:47": "gṛhītvā sadadhiṣṭhānaṃ punarhīnasamāśraye /",
  "SA10bsa036_u:48": "cyutipakṣāśrayatvāt so yāti sajjanahāsyatām // 4 //",
  "SA10bsa036_u:50": "ityuktirnidarśanamātram /",
  "SA10bsa036_u:51": "tatrārthastu yathoktaṃ bhagavatā-",
  "SA10bsa036_u:52": "“bahavaḥ śaraṇaṃ yānti parvatāṃśca vanāni ca /",
  "SA10bsa036_u:53": "ārāmānvṛkṣāṃścaityāṃśca manuṣyā bhayavarjitāḥ // 5 //",
  "SA10bsa036_u:54": "na tvetaccharaṇaṃ śreṣṭhaṃ naitaccharaṇamuttamam /",
  "SA10bsa036_u:55": "naitaccharaṇamāgamya sarvaduḥkhātpramucyate // 6 //",
  "SA10bsa036_u:56": "yastu buddhaṃ ca dharma ca saṃghaṃ ca śaraṇaṃ gataḥ /",
  "SA10bsa036_u:57": "catvāri cāryasatyāni paśyati prajñayā yadā // 7 //",
  "SA10bsa036_u:58": "duḥkhaṃ duḥkhasamutpādaṃ duḥkhasya samatikramam /",
  "SA10bsa036_u:59": "ārya cāṣṭāṅgikaṃ mārga kṣemaṃ nirvāṇagāminam // 8 //",
  "SA10bsa036_u:60": "etaddhi śaraṇaṃ śreṣṭhaṃ etaccharaṇamuttamam /",
  "SA10bsa036_u:61": "etaccharaṇamāgamya sarvaduḥkhāt pramucyate // 9 // iti /",
  "SA10bsa036_u:62": "śaraṇagamamārthaḥ tādṛśaḥ /",
  "SA10bsa036_u:63": "tatrānuśaṃsāstimnaḥ /",
  "SA10bsa036_u:64": "hetukālānuśaṃsā mārgakālānuśaṃsā phalakālānuśaṃsā ca /",
  "SA10bsa036_u:65": "hetukālā ehikī āmuṣmikī ca /",
  "SA10bsa036_u:66": "ehikānuśaṃsā aṣṭamahābhayamokṣaḥ,",
  "SA10bsa036_u:67": "anantarāyaḥ,",
  "SA10bsa036_u:68": "śāsanapriyadevasāhāyyam,",
  "SA10bsa036_u:69": "maraṇakāle ca cittaharṣādi /",
  "SA10bsa036_u:70": "āmuṣmikī tu saṃsāradurgati-duḥkhebhya uddharaṇam,",
  "SA10bsa036_u:71": "nirvāṇābhyudayasukhapradattvañca /",
  "SA10bsa036_u:72": "mārgānuśaṃsā tu catu-(rārya-)",
  "SA10bsa036_u:73": "satyāryāṣṭāṅgikamārga-saptabodhyaṅgādiyojanam /",
  "SA10bsa036_u:74": "phalānusaṃsā dvividhanirvāṇasya trikāyasya ca prāptiḥ /",
  "SA10bsa036_u:75": "idaṃ hi saṃkṣiptam,",
  "SA10bsa036_u:76": "vistaraṃ tu guruśāstrabhyo jñeyam /",
  "SA10bsa036_u:77": "śaraṇagamanadeśanā-nāma gurubodhisattva-dīpaṅkara-śrījñānaviracitā samāptā //"
}