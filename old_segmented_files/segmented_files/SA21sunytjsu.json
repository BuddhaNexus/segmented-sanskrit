{
  "SA21sunytjsu:0": "Tatvajñānasaṃsiddhiḥ",
  "SA21sunytjsu:1": "om namaḥ śrībhagavatyai vajravārāhyai //",
  "SA21sunytjsu:2": "ānandāmbudhimaṇḍanādupagatā sambuddhalakṣmīrasau",
  "SA21sunytjsu:3": "sarvākāraguṇānvitā jagadaghadhvāntaughavidhvaṃsinī /",
  "SA21sunytjsu:4": "jyotirjñānanidherdhṛtiḥ smṛtinidheḥ śāntirmanīṣānidheḥ",
  "SA21sunytjsu:5": "pāyādvajravirāsinī bhagavatī lokatrayaṃ durgateḥ // Tjs_0.1 //",
  "SA21sunytjsu:6": "śrīvajradevīpadapadmareṇu,",
  "SA21sunytjsu:7": "rājiṃ namaskṛtya guroḥ padaṃ ca /",
  "SA21sunytjsu:8": "śrīsambaraṃ saṃvṛtavodhicittaṃ,",
  "SA21sunytjsu:9": "prajñākṛpādvaitapadaṃ praśastam // Tjs_0.2 //",
  "SA21sunytjsu:10": "vajradevīpadadvaṃdvavandanānandavarttinā /",
  "SA21sunytjsu:11": "bhikṣuṇā jñānandreṇa candrevasuvaśarmaṇā // Tjs_0.3 //",
  "SA21sunytjsu:12": "sādhanaṃ vajravārāhyāḥ svārthaṃkiñjidvibhajyate /",
  "SA21sunytjsu:13": "subhāṣitaprade nityaṃ matiḥ kalpanasotsukā // Tjs_0.4 //",
  "SA21sunytjsu:14": "tataḥśradvāpareṇedaṃ mandasvalpadhiyā mayā /",
  "SA21sunytjsu:15": "karttavya na mama doṣo vīkṣaṇīyo mahājanaiḥ // Tjs_0.5 //",
  "SA21sunytjsu:16": "om namaḥ śrī vajravārāhyai",
  "SA21sunytjsu:17": "udyātā talacakrato 'niladhutā vidyucchaṭābhāsvarā,",
  "SA21sunytjsu:18": "dagdhālitritayā trilokamahitā pīyūṣadhārāplutā /",
  "SA21sunytjsu:19": "buddhajñānarasāvilā vikaluṣā svānandasandohadā",
  "SA21sunytjsu:20": "bhāvābhāvavicāraṇāvirahitā vārāhikā pātu vaḥ // Tjs_1.1 //",
  "SA21sunytjsu:21": "nirmāṇālidineśamaṇḍalagatā kādyādivarṇāvṛtā,",
  "SA21sunytjsu:22": "prajbālajvalanojvalāmṛtasavā sūkṣmājasūtropamā",
  "SA21sunytjsu:23": "vidyābuddhakadamvakaṃ dahati yā cakratrayorbhedinī",
  "SA21sunytjsu:24": "sānandā lalitordvagā sphuratu vo vārāhikā cetasi // Tjs_1.2 //",
  "SA21sunytjsu:25": "praṇipatya vajrapūrvāṃ vārāhīṃ vajrayoginīm /",
  "SA21sunytjsu:26": "śirasā svasmṛtaye vakṣye 'haṃ tattvajñānasya saṃsiddhim // Tjs_1.3 //",
  "SA21sunytjsu:27": "vijanamano 'nukūlasthānaṃ nāthāṃkakaḥ praviśetsudhīḥ /",
  "SA21sunytjsu:28": "tatra sukumāramāsanamupaviśya vibhāvayecchuddhiṃ // Tjs_1.4 //",
  "SA21sunytjsu:29": "tadanu ca ṣaṣṭhajinena tryakṣarajaptena vajradharahṛdayaṃ /",
  "SA21sunytjsu:30": "saṃlikhyānāmikayā,",
  "SA21sunytjsu:31": "lohitakusumārcitaṃ kuryāt // Tjs_1.5 //",
  "SA21sunytjsu:32": "tadanu paramādyapātre karakamalaṃ dakṣiṇetaraṃ kṣiptvā /",
  "SA21sunytjsu:33": "vidadhīta savanaṃ yathopadeśaṃ śayasparśāt // Tjs_1.6 //",
  "SA21sunytjsu:34": "pravidhāya karanyāsaṃ bṛddhāṅguṣṭhāṅgulisamāyogāt /",
  "SA21sunytjsu:35": "kurvītāṅganyāsaṃ ṣaḍbhirvīreśvarīmantraiḥ // Tjs_1.7 //",
  "SA21sunytjsu:36": "tadanu cakravajravaropari raṅgāruṇoyogajasamamamantraṃ /",
  "SA21sunytjsu:37": "bhujagabhavaiḥ suviśiṣṭaiḥ sicayagatairavakirecchanakaiḥ // Tjs_1.8 //",
  "SA21sunytjsu:38": "tatra jinahṛdayacakraṃ śikhikoṭikaṃ samabhilikhya /",
  "SA21sunytjsu:39": "tadgarbhe mantrālīṃ gāṅgeyaśalākayā vilikhet // Tjs_1.9 //",
  "SA21sunytjsu:40": "cakrasya vāhyabhāge pūrvottarapaścimārkidigdeśe /",
  "SA21sunytjsu:41": "satsvastikānabhilikhetkrameṇa vāmahastena // Tjs_1.10 //",
  "SA21sunytjsu:42": "ākṛṣya vajradevīmpraviśya mantrākṣareṣu baddhvā paritoṣayet /",
  "SA21sunytjsu:43": "suvidhānāt jaḥ huṃ vaṃ horiti paṭhitvā // Tjs_1.11 //",
  "SA21sunytjsu:44": "tadanu saparyā vividhāstasyā vidadhīta maṃtrarūpāyāḥ /",
  "SA21sunytjsu:45": "bhakṣyairbhojyairlehyaiḥ peyaiścoṣyaiḥ sakāmaguṇaiḥ // Tjs_1.12 //",
  "SA21sunytjsu:46": "vividhairvalaiḥ samadanairupahāraiḥ pañcabhiratiparārdhyaiḥ /",
  "SA21sunytjsu:47": "gītaivadyairnnṛtyaiḥ pradakṣiṇāpraṇatinutibhiśca // Tjs_1.13 //",
  "SA21sunytjsu:48": "pratidivasaṃ pratipakṣaṃ pratimāsaṃ vā tithau daśamyāṃ /",
  "SA21sunytjsu:49": "kuryādyathoktapūjāvidhimasyāḥ siddhimākāṃkṣaṇaḥ // Tjs_1.14 //",
  "SA21sunytjsu:50": "atha kṛtavāhyārcanavidhirurukaruṇo nirmitāridhyāvje //",
  "SA21sunytjsu:51": "vyasuhṛyoṣṇaguvimvāṃ dhyāyātpūrvoditāṃ devīm // Tjs_2.1 //",
  "SA21sunytjsu:52": "saṃdhyāsindūravarṇāṃ kharakaranikarāyāstasaptārkkakāntīṃ /",
  "SA21sunytjsu:53": "karttrīṃ sarvārttihaṃtrīṃ sphuradamṛtaghṛṇīṃ vibhratīṃ savyadoṣṇā //",
  "SA21sunytjsu:54": "vibhrāṇāṃ vāmadoṣṇā kamalamatisitaṃ raktapūrṇadhvajāḍhyāṃ /",
  "SA21sunytjsu:55": "kālyā dambholikālyā parigataśirasaṃ muktamūrddhokhahastāṃ // Tjs_2.2 //",
  "SA21sunytjsu:56": "muṇḍālīmaṇḍitāṅgīṃ mukhagaladasṛjaṃ svādaguṃ muktanādāṃ,",
  "SA21sunytjsu:57": "savye corddhaṃkirāsyāṃ varaśubhagamanāṃ krodhamūlānanāntāṃ /",
  "SA21sunytjsu:58": "sānandāṃ sānurāgāṃ vividharasayutāmarddhaparyyaṅkanṛtyāṃ",
  "SA21sunytjsu:59": "mudrāṣaṇmudritāṅgīṃ vyapagatavasanāṃ ṣoḍaśāvdāṃ varāṅgīm // Tjs_2.3 //",
  "SA21sunytjsu:60": "jñānākarṣādividhiḥ prāgiva kṛtvā vidhānavinmaṃntrī /",
  "SA21sunytjsu:61": "svastikamalikābhimukhaṃ bhramantamekaṃ drūtaṃ dhyāyāt // Tjs_2.4 //",
  "SA21sunytjsu:62": "tadanu viyadvatī dhātau trikūṭagirigahvare bhramaccakraṃ /",
  "SA21sunytjsu:63": "prāguktamiva dhyāyādraktaṃ jājyalyamānaṃ sat // Tjs_2.5 //",
  "SA21sunytjsu:64": "tatra sthiramivātivegānnirvātaniṣkampadīpamiva dīptaṃ /",
  "SA21sunytjsu:65": "drāvayedurusukhacakraṃ śravadamṛtasārakṛtasavanam // Tjs_2.6a //",
  "SA21sunytjsu:66": "kāyatrayasvabhāvaṃ paramaṃ sahajātmakaṃ jagadvyāpinaṃ /",
  "SA21sunytjsu:67": "sphuradamitaśāntasantatiṃ paśyetpaścātsukhaṃ paścāt // Tjs_2.6b //",
  "SA21sunytjsu:68": "pratidivasaṃ pratisandhyaṃ yathākṣaṇamvā vibhāvayedetat /",
  "SA21sunytjsu:69": "yāvatsiddhinimittaṃ tāvadidamucyate vyaktam // Tjs_2.7 //",
  "SA21sunytjsu:70": "ayatnajaprītilayānubandhanāt yadā bhavedvyaktamidaṃ vibhāvitam //",
  "SA21sunytjsu:71": "kaśācapeṭādiha naiva vedanā tadā bhavetsiddhiradūravarttinī // Tjs_2.8 //",
  "SA21sunytjsu:72": "pratāḍitānāṃ paṇavādikānāṃ paṭudhvanirnaśrutagocaraścet /",
  "SA21sunytjsu:73": "yadāpyate bodhiranuttarāgrā svapne cirāddhyānavatāgrasiddhiḥ // Tjs_2.9 //",
  "SA21sunytjsu:74": "dṛṣṭvā siddhinimittaṃ pitṛvanagirikuñje vṛkṣamūlādau /",
  "SA21sunytjsu:75": "nivasannutpannakramayogamajasraṃ sudhīḥ kuryāt // Tjs_2.10 //",
  "SA21sunytjsu:76": "siddhau vasudhādīnāṃ bhavatī layo hyuttarottarakramaśaḥ /",
  "SA21sunytjsu:77": "khyāti tadā gaganābhaṃ prabhāsvaraṃ jñānamātraṃ sat // Tjs_2.11 //",
  "SA21sunytjsu:78": "jānīyāttaccihnaiścihnāni tu pañcadhā vidustajjñāḥ /",
  "SA21sunytjsu:79": "ata eva tāni yogī samāhito lakṣayenmanasā // Tjs_2.12 //",
  "SA21sunytjsu:80": "prathamaṃ mṛgatṛṣṇābhaṃ dhūmākāraṃ dvitīyakaṃ cihnaṃ /",
  "SA21sunytjsu:81": "khadyotavattṛtīyaṃ caturthaṃ dīpojvalaṃ spaṣṭaṃ // Tjs_2.13 //",
  "SA21sunytjsu:82": "vigatābhragaganasadṛśaṃ pañcamaṃ cihnaṃ prakāśamavikalpaṃ /",
  "SA21sunytjsu:83": "evaṃ lavdhanimitto mudrāṃ mahatīmavāpnoti // Tjs_2.14 //",
  "SA21sunytjsu:84": "utthātukāmaḥ praṇipatya yoginīṃ nāthaṃ ca kasthaṃ samudīrya mūḥ kṛtiṃ /",
  "SA21sunytjsu:85": "utthāya kṛtyaṃ vidadhīta tatvadhīstiṣṭhetsadā yogayugena yogavit // Tjs_2.15 //",
  "SA21sunytjsu:86": "iti tattvajñānasaṃsiddhau bhāvanāvidhiḥ // 2 //",
  "SA21sunytjsu:87": "adhyeṣitaśca bahuśaḥ śiṣyaiḥ kṛtamaṇḍalaiḥ padāvjanataiḥ //",
  "SA21sunytjsu:88": "mantrī tithau daśamyāṃ vidadhītānugrahanteṣāṃ // Tjs_3.1 //",
  "SA21sunytjsu:89": "saṃpūjya maṃtrarūpāṃ devīṃ cakrasthitāṃ vihitayomaḥ /",
  "SA21sunytjsu:90": "ādāya maṃtrajaptaṃ paramādyaṃ niṣkramettasmāt // Tjs_3.2 //",
  "SA21sunytjsu:91": "atha vihitapañcamaṇḍalamūrddhasthāṃ tadantadakṣiṇaṃśiṣyaṃ /",
  "SA21sunytjsu:92": "kusumasrajaṃ dadhānaṃ dhyātakenāthaṃ guruḥ paśyet // Tjs_3.3a //",
  "SA21sunytjsu:93": "tadanu ca yathoktaṃ devīcakraṃ prodyanmarīcikaṃ rayavat /",
  "SA21sunytjsu:94": "dhyātvāntabāsigātre vajrabhṛttasya saṃdadyāt // Tjs_3.3b //",
  "SA21sunytjsu:95": "evaṃ syādāveśastatkalikā prakampanaṃ vāṣpaḥ /",
  "SA21sunytjsu:96": "pāto jñānotpādaḥ svārūpañcāpi paripādyāḥ // Tjs_3.4 //",
  "SA21sunytjsu:97": "tadanu kathayetsamādhiṃ pūjāmaṃtraṃ ca vajrayoginyāḥ /",
  "SA21sunytjsu:98": "śraddhānvitasya guṇino gurubuddhābhinnasadbhakteḥ // Tjs_3.6 //",
  "SA21sunytjsu:99": "kathayenna yogamenaṃ sadyaḥ pratyayakaraṃ susiddhaṃvā //",
  "SA21sunytjsu:100": "śraddhāvirahitamanaso bhaktivihīnaśiṣyasya // Tjs_3.7 //",
  "SA21sunytjsu:101": "vidadhāti yastu pūjāṃ devīcakrasya maṃtrayuktasya /",
  "SA21sunytjsu:102": "tasyāpayānti bhayānyaṣṭau pāpāni ca mahānti // Tjs_3.8 //",
  "SA21sunytjsu:103": "durbhagatā dāridryaṃ vyādhijarāduḥkhadaurmanasyāni /",
  "SA21sunytjsu:104": "bhramakalikaluṣakleśāḥ pīḍā nānāvidhāścāpi // Tjs_3.9 //",
  "SA21sunytjsu:105": "yo japati cakramantraṃ dhyātvā hṛdaye nirodhavācāsau /",
  "SA21sunytjsu:106": "prāpnotyaṣṭau siddhīḥ pañcābhijñāṃstathāṣṭaguṇāna // Tjs_3.10 //",
  "SA21sunytjsu:107": "dhyāyati yaḥ kiravaktrāṃ pratidavasaṃ yatnataścatuḥsaṃdhyaṃ hariharahiraṇyagarbhairjetumaśakyāṃ mṛtiṃ jayati // Tjs_3.11 //",
  "SA21sunytjsu:108": "vastrānnapānadhanadhānyaviśālabhūmiḥ prāsādadivyaśayanāsanasādhanāni /",
  "SA21sunytjsu:109": "tasyodbhavanti dayitā vividhāśca vidyā,",
  "SA21sunytjsu:110": "yo bhāvayatyaśanikolamukhīṃ sacakrāṃ // 12 //",
  "SA21sunytjsu:111": "iti tatvajñānasaṃsiddhau sānuśaṃsā śiṣyānugrahavidhiḥ //",
  "SA21sunytjsu:112": "maṃtroddhāramataḥ paramadhidhāsye vajrayoginīhṛdayaṃ /",
  "SA21sunytjsu:113": "karṇātkarṇamupāgatamāsyādāsyaṃ tathākramataḥ // Tjs_4.1 //",
  "SA21sunytjsu:114": "pūrvoditamiva cakra saṃlikhyaṃ marudgaṇālayopetāṃ /",
  "SA21sunytjsu:115": "tatra likhetparipāṭita ālikāliṃ tathaiva koṇaṃ // Tjs_4.2 //",
  "SA21sunytjsu:116": "jhādharagaṃ ḍādharasthaṃ hādharagavibhūṣitaṃ samāyuktaṃ /",
  "SA21sunytjsu:117": "trikamādito vilikhyaṃ sadakṣaraṃ tatvaparidīpi // Tjs_4.3 //",
  "SA21sunytjsu:118": "bhorddhagataṃ chorddhasthitasametaṭorddhasthitaṃ tadanu lekhyaṃ /",
  "SA21sunytjsu:119": "ḍādharayutaṃ ṣādhāragaṃ ṣorddhasthitayuktaśorddhagataṃ // Tjs_4.4 //",
  "SA21sunytjsu:120": "ñādharayutaḷtalasthaṃ ṭādharayutaporddhasaṃsthitaṃ /",
  "SA21sunytjsu:121": "tadanu ṭhādharagānvitaphorddhagaṃ aivāmayutaṃ haṭāntasthaṃ // Tjs_4.5 //",
  "SA21sunytjsu:122": "casamadhyagataṃ ṭhasavyagasametaṃ bhādharasusaṃsthitaṃ /",
  "SA21sunytjsu:123": "tadanu hathamadhyagataṃ tavāmayuktaṃ ṭhalamadhyaga paścāt // Tjs_4.6 //",
  "SA21sunytjsu:124": "sarvakarāntaphamadhyagaṃ tṛtīyavargādivāmagasametaṃ /",
  "SA21sunytjsu:125": "ṇorddhayutaṃ lādharagaṃ chorddhasthaṃ bhatalagaṃ ṭhasavyayutaṃ // Tjs_4.7 //",
  "SA21sunytjsu:126": "torddhagayutaṃ ṣādharagaṃ thorddhadasaṃyuktaṃ ṇādharagaṃ paścāt /",
  "SA21sunytjsu:127": "phādharagaṃ ṭhādharasaṃyuktaṃ phorddhasthaṃ ṇorddhayuktaṃ lādharagaṃ // Tjs_4.8 //",
  "SA21sunytjsu:128": "ḍādharaśūnyasametaṃ trivatalagaṃ corddhasthitaṃ ratalaṃ /",
  "SA21sunytjsu:129": "thādharayutaṃ śādharagaṃ ñādharasamāyuktaṃ cāpi // Tjs_4.9 //",
  "SA21sunytjsu:130": "sayamadhyagaṃ jhavāmagasametamuktākṣarakṛto rahasyaḥ /",
  "SA21sunytjsu:131": "maṃtroyamaśanīdevyā lekhyo japyo vibhāvyaśca // Tjs_4.10 //",
  "SA21sunytjsu:132": "cintāmaṇiḥ kalpakuṭhāgrakumbhaḥ śrīkāmadugdhenurapi praśastāḥ /",
  "SA21sunytjsu:133": "te sādhyamānā dadatīha vittānyayantu saukhyaṃ sadhanaṃ dadāti // Tjs_4.11 //",
  "SA21sunytjsu:134": "iti tatvajñānasaṃsiddhau mantrauddhāravidhiḥ //",
  "SA21sunytjsu:135": "yasminnayaṃ pātragatevyalikhya,",
  "SA21sunytjsu:136": "pūjānimittaṃ vidhinā vidhijñaḥ /",
  "SA21sunytjsu:137": "bālasya rakṣā vidhivadvidheyā,",
  "SA21sunytjsu:138": "vaddhena dokaṇṭhaśikhāsuvāhau // 1 //",
  "SA21sunytjsu:139": "dṛṣṭvāpayānti bhujagāḥ śiśukaṃ sarakṣaṃ,",
  "SA21sunytjsu:140": "bhūtā grahā niśicarāḥ sapiśācasaṃghāḥ /",
  "SA21sunytjsu:141": "anye ca bālakabharyārttikarāḥ subhīmāḥ siṃhaṃ yathā vanacarā valinambhayārttāḥ // 2 //",
  "SA21sunytjsu:142": "saṃprāpya sadupadeśaṃ dṛṣṭvā saṃpratyayaṃ ca yogasya /",
  "SA21sunytjsu:143": "siddhiriyaṃ samabhilekhi sphuradamalajñānasavaṃsatiḥ // 3 //",
  "SA21sunytjsu:144": "tasmāttatsaṃprāptyai saṃsevyaṃ saguroḥ padāmburuhaṃ /",
  "SA21sunytjsu:145": "sānnā pradānabidhinā kāyakleśaiḥ praṇāmaiśca // 4 //",
  "SA21sunytjsu:146": "tatvajñānāgrasiddhirvahuhitajananī yā janasyeva loke",
  "SA21sunytjsu:147": "satvānāṃ yanmayosītkuśalamakaluṣaṃ pūrvacadrāṃśuśubhraṃ /",
  "SA21sunytjsu:148": "bhūyāsustena lokāḥ kalimalavikalā śuddhāsambodhibhājo",
  "SA21sunytjsu:149": "labdhvā mudrāmudārāṃ bhavabhayaśamanīṃ sarvasatvārthakartrīṃ // 5 //",
  "SA21sunytjsu:150": "samāptoyaṃ tatvajñānasaṃsiddhirnāma svādhiṣṭhānaśceti śubham sarvadā"
}