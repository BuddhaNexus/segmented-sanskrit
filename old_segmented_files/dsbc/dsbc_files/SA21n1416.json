{
  "SA21n1416:0": "Caryāgitikoṣaḥ",
  "SA21n1416:1": "upodghātaḥ",
  "SA21n1416:2": "1 sahajavaṃdanā",
  "SA21n1416:3": "paraṃ bhāvād dūraṃ na nikaṭabhāvādapi punaḥ",
  "SA21n1416:4": "parokṣaṃ nātītaṃ sadapi jagatāṃ nāpi viṣayaḥ |",
  "SA21n1416:5": "anāstikyaṃ śūnyaṃ sakalayaminām ekaśaraṇaṃ",
  "SA21n1416:6": "jayatyekaṃ tattvaṃ sugatavaravapuratra sahajaṃ || 1 ||",
  "SA21n1416:7": "2 saṃdhyābhāṣāvaṃdanā",
  "SA21n1416:8": "saṃdhyā hi bhāṣā jayatīha yasyāṃ",
  "SA21n1416:9": "vadanti siddhāḥ paramārthatattvaṃ |",
  "SA21n1416:10": "prādhānyamarthasya nivedayanto",
  "SA21n1416:11": "nighnanti śabde sukṛtābhimānaṃ || 2 ||",
  "SA21n1416:12": "āgatiḥ prakṣaṇaṃ proktaṃ,",
  "SA21n1416:13": "kṛpīṭaṃ ḍamarukaṃ mataṃ |",
  "SA21n1416:14": "abhavyaṃ durduraṃ jñeyaṃ,",
  "SA21n1416:15": "bhavyaṃ kāliñjaraṃ mataṃ || 3 ||",
  "SA21n1416:16": "asparśaḥ ḍiṃḍimaṃ proktaṃ,",
  "SA21n1416:17": "kapālaṃ padmabhājanaṃ |",
  "SA21n1416:18": "bhaktaṃ tṛptikaraṃ jñeyaṃ,",
  "SA21n1416:19": "vyaṃjanaṃ mālatīndhanaṃ || 4 ||",
  "SA21n1416:20": "gūthaṃ catuḥsamaṃ proktaṃ,",
  "SA21n1416:21": "mūtraṃ kastūrikā smṛtā |",
  "SA21n1416:22": "svayaṃbhūḥ sihlakaṃ jñeyaṃ,",
  "SA21n1416:23": "śukraṃ karpūrakaṃ mataṃ |",
  "SA21n1416:24": "mahāmāṃsam ālijaṃ proktaṃ,",
  "SA21n1416:25": "dvīndriyayogaṃ kunduruḥ |",
  "SA21n1416:26": "vajraṃ bolam iti khyātaṃ,",
  "SA21n1416:27": "padmaṃ kakkolakaṃ mataṃ || 6 ||",
  "SA21n1416:28": "kulaṃ paṃvidhaṃ khyātaṃ varṇabhedena bheditaṃ |",
  "SA21n1416:29": "saṃdhyābhāṣā etāḥ syur buddhāśca paṃcakaulikāḥ || 7 ||",
  "SA21n1416:30": "ḍombī vajrakulī khyātā naṭī padmakulī tathā |",
  "SA21n1416:31": "śvapacī ratnakulī caiva dvijā tāthāgatī matā || 8 ||",
  "SA21n1416:32": "rajakī karmakulī caiva etā mudrāḥ susiddhidāḥ |",
  "SA21n1416:33": "āsāṃ śukraṃ bhaved vajraṃ pūjayitvā pibed vratī || 9 ||",
  "SA21n1416:34": "vajragarbha mahāsattva yanmayā kathitaṃ tvayi |",
  "SA21n1416:35": "tat sarvaṃ sādaraṃ grāhyaṃ sandhyābhāṣaṃ mahādbhataṃ || 10 ||",
  "SA21n1416:36": "yo'bhiṣikto'tra na vadet saṃdhyābhāṣayā |",
  "SA21n1416:37": "samavidrohaṇaṃ tasya jāyate nātra saṃśayaḥ || 11 ||",
  "SA21n1416:38": "ityupadravacauraiśca grahajvala [=grahajvaraiḥ] vibuddho'pi |",
  "SA21n1416:39": "mriyate'sau yadi buddho'pi saṃdhyābhāṣaṃ na bhāṣayet || 12 ||",
  "SA21n1416:40": "svasamayavidān prāpya yadi na bhāṣayedidaṃ vacaḥ |",
  "SA21n1416:41": "tadā kṣobhaṃ prakurvanti yoginyaścatuṣpīṭhajāḥ || 13 ||",
  "SA21n1416:42": "iti sarvataṃtranidāna saṃdhyābhāṣānāmni paṭale tṛtīye deśayitvā punaḥ piṃḍārthanāmnā paṭalena caturthenāha bhagavān -",
  "SA21n1416:43": "kolla ire ṭhia bolā mummuṇire kakkolā |",
  "SA21n1416:44": "ghaṇa kiviḍ ho vājjai karuṇeki aina-rolā || 1 ||",
  "SA21n1416:45": "vārdhakye sthitaṃ bolaṃ maunamaune kakkolaṃ |",
  "SA21n1416:46": "dhanaṃ kṛpoṭo bho vādyate kāruṇikam ajinaravaḥ ||",
  "SA21n1416:47": "tahi vala khajjaha gāḍhe maaṇā pijiai |",
  "SA21n1416:48": "3 siddhavandanā",
  "SA21n1416:49": "avicyutaṃ tāṃ karuṇāmupāśritāḥ",
  "SA21n1416:50": "dhiyā nayanto ho janaṃ kṛtārthatāṃ |",
  "SA21n1416:51": "jagatyaliptāḥ khalu śūnyatābalād",
  "SA21n1416:52": "jayanti siddhāḥ paramārthakovidāḥ || 3 ||",
  "SA21n1416:53": "4 caturaśītisiddhavaṃdanā",
  "SA21n1416:54": "yogavidyāmayān vande siddhāṃścaturaśītikān |",
  "SA21n1416:55": "sarvajātikulodbhūtānapyajātiparāyāṇān || 4 ||",
  "SA21n1416:56": "5 nāthābhidhabāhyasiddhavaṃdanā",
  "SA21n1416:57": "nityameva nāthānāṃ hi nirguṇe sanāthadhiyāṃ",
  "SA21n1416:58": "nityameva saguṇe hyanāthamatikāriṇāṃ |",
  "SA21n1416:59": "nityameva bāhyakarmakāṇḍe tucchadhāraṇānāṃ",
  "SA21n1416:60": "nityameva yoge yogasiddhiṣu vihāriṇāṃ ||",
  "SA21n1416:61": "nityameva jātivādakhaṇḍanaparāyaṇānāṃ",
  "SA21n1416:62": "nityameva nāthe manaskāravratadhāriṇāṃ |",
  "SA21n1416:63": "nityameva seśaṃ saṃvidhāya bauddhasiddhapathaṃ",
  "SA21n1416:64": "nityameva naumi caraṇeṣvajāticāriṇāṃ || 5 ||",
  "SA21n1416:65": "6 'santa'vandanā",
  "SA21n1416:66": "rāmabhaktipramukhaṃ vidhāya seśaṃ nāthapathaṃ",
  "SA21n1416:67": "svalpayogacaryaṃ yogamārgaguṇībhāvataḥ |",
  "SA21n1416:68": "rāmaṃ nirguṇaṃ vyavasya rāmaṃ saguṇaṃ nirasya",
  "SA21n1416:69": "rāmaṃ sahajaṃ manasikṛtya buddhakāyataḥ ||",
  "SA21n1416:70": "jātijāvalepaṃ rāmabhaktidhārayā vinīya",
  "SA21n1416:71": "kāruṇyaṃ manaḥsu saṃprasārya sarvasārataḥ |",
  "SA21n1416:72": "saṃto vijayante ye kabīrāgrābhidhānā bhuvi",
  "SA21n1416:73": "teṣāṃ caraṇeṣvahaḥ nato'smi bahumānataḥ || 6 ||",
  "SA21n1416:74": "7 'santa' vacanavaṃdanā",
  "SA21n1416:75": "vītasarvadoṣāṃ naumi vācamihasarvasattāṃ",
  "SA21n1416:76": "nityaṃ deśayantīṃ sattvakāyeṣu mahākṣamāṃ |",
  "SA21n1416:77": "dharmaṃ mahākaruṇāparāyaṇāṃ vadantīṃ sadā",
  "SA21n1416:78": "sarvavidhāṃ hiṃsāṃ dūrayantīṃ duratikramāṃ ||",
  "SA21n1416:79": "prajñayā sadarthopāyayutayā samanvāgatām",
  "SA21n1416:80": "arthakriyāṃ kārayantīṃ niyatamanuttamāṃ |",
  "SA21n1416:81": "śānteranuśaṃsaṃ saṃdiśantīmaparyantāṃ guṇe",
  "SA21n1416:82": "paramaṃ pramāṇamapramāṇagamanopamāṃ || 7 ||",
  "SA21n1416:83": "8 sahajatattvanirūpaṇaprasaṃge punaḥ sahajavandanā",
  "SA21n1416:84": "anakṣaraṃ yat sugato'nvabhūtvān",
  "SA21n1416:85": "yadeva saṃdeśitavānanakṣaraḥ |",
  "SA21n1416:86": "samastaśāstreṣu bahu prapaṃcitaṃ",
  "SA21n1416:87": "tadeva me bhātu sadarpitākṣaraṃ || 8 ||",
  "SA21n1416:88": "9 sahajasya rahasyamayatā gurupramāṇatā ca",
  "SA21n1416:89": "yathā kumārī surataṃ sakhīmukhāt",
  "SA21n1416:90": "śṛṇoti varṇākṣarato hyagocaraṃ |",
  "SA21n1416:91": "tathaiva kalyāṇajano gurormukhāt",
  "SA21n1416:92": "karoti karṇe sahajaṃ vijānataḥ || 9 ||",
  "SA21n1416:93": "10 sahajasya svakāye'nubhavaḥ",
  "SA21n1416:94": "gṛhe'pi tiṣṭhan vijane'pi saṃvasan",
  "SA21n1416:95": "prayatnato yogamupāśrito gurau |",
  "SA21n1416:96": "adhisvakāyaṃ kurute mahāsukhaṃ",
  "SA21n1416:97": "sukhena sākṣād vividhoditaṃ satāṃ || 10 ||",
  "SA21n1416:98": "11 kāyaparijñānaṃ",
  "SA21n1416:99": "saronadīpaṃkajaṣaṃḍaśomano",
  "SA21n1416:100": "yathā sumerurbahudivyasaṃśrayaḥ |",
  "SA21n1416:101": "tathaiva nāḍīgaṇacakravibhramo",
  "SA21n1416:102": "jināśrayastiṣṭhati merudaṃḍakaḥ || 11 ||",
  "SA21n1416:103": "adhastād merudaṇḍasya pradeśe gudasaṃśraye |",
  "SA21n1416:104": "vartate prathamaṃ cakraṃ sukhapālābhidhānakaṃ || 12 ||",
  "SA21n1416:105": "nābhau hṛtkaṃṭhayoḥ śīrṣe merau cakracatuṣṭayaṃ |",
  "SA21n1416:106": "nirmāṇaṃ dharmasaṃbhogau mahāsukhamiti kramāt || 13 ||",
  "SA21n1416:107": "caturṣvetuṣu cakreṣu jinaḥ sahajasaṃjñakaḥ |",
  "SA21n1416:108": "siddhānāṃ sādhānākṣetraṃ catuṣkāyātmakaḥ sthitaḥ || 14 ||",
  "SA21n1416:109": "praveśo jinakāyeṣu yathā nāḍyo bhavetsatāṃ |",
  "SA21n1416:110": "sāvadhūtīti vikhyātā kāyamerau kṛtālayā || 15 ||",
  "SA21n1416:111": "ubhayoḥ pārśvayorasyā dve nāḍyo tiṣṭhato'pare |",
  "SA21n1416:112": "tasmāt pratipadā seyaṃ madhyamā jinagāminī || 16 ||",
  "SA21n1416:113": "nāsāpuṭena vāmena lalanāliścandranāḍikā |",
  "SA21n1416:114": "kālirdakṣiṇato lakṣyā rasanā sūryanāḍikā || 17 ||",
  "SA21n1416:115": "bhavanti bahavo kāye nāḍyo'trārthaparāṅmukhā |",
  "SA21n1416:116": "sadarthagāminau tvekā madhyamā sugatapriyā ||18 ||",
  "SA21n1416:117": "asmin kalevare puṃsāṃ nāḍīcakramidaṃ tathā |",
  "SA21n1416:118": "puṣkariṇyāṃ yathā nālapadmaṃ vihitasaṃśrayaṃ || 19 ||",
  "SA21n1416:119": "padmopameṣu cakreṣu mṛṇāladalakalpanā |",
  "SA21n1416:120": "tattvaṃ bhāvayituṃ proktā siddhaistattvārthavedibhiḥ || 20 ||",
  "SA21n1416:121": "12 sādhanāsaṃketaḥ",
  "SA21n1416:122": "maṇipadmasamāyoge'pyacyutād bodhicittataḥ |",
  "SA21n1416:123": "ālikālisamāyogāt prāṇānāṃ ca nirodhataḥ || 21 ||",
  "SA21n1416:124": "avadhūtīpathenaiva jinakṣetravihāriṇaḥ |",
  "SA21n1416:125": "śūnye mahāsukhe pūrṇe cittasyātra dhruvā sthitiḥ || 22 ||",
  "SA21n1416:126": "eṣa cittasya viśrāmaḥ siddhānāmarthadeśanā |",
  "SA21n1416:127": "aprāṇacittasaṃcārā'himānalakarā sthitiḥ || 23 ||",
  "SA21n1416:128": "sahajasya sphuṭīkāre eṣa buddhena saṃgamaḥ |",
  "SA21n1416:129": "ehipaśyakadharmo'yaṃ pratyātmaṃ gocaraḥ satāṃ || 24 ||",
  "SA21n1416:130": "hāsukhe yanmanaso'calā sthitir",
  "SA21n1416:131": "vivṛtya yatnādavadhūtikāpathaṃ |",
  "SA21n1416:132": "sphuṭīkṛtiḥ sā sahajasya, tattvataḥ",
  "SA21n1416:133": "sa eva caṃḍālikayā samāgamaḥ || 25 ||",
  "SA21n1416:134": "dvayaṃdvayaprāptimatāmavicyutau",
  "SA21n1416:135": "sudhāmbunaḥ saṃvṛtibodhicetasaḥ |",
  "SA21n1416:136": "datra mudrāptiratīva tattanau",
  "SA21n1416:137": "rahasyamevaṃpratime karaṇḍake || 26 ||",
  "SA21n1416:138": "kṣaṇaṃ vicitraṃ ca vipākavat kṣaṇaṃ",
  "SA21n1416:139": "kṣaṇaṃ vimardaṃ ca tato vilakṣaṇaṃ |",
  "SA21n1416:140": "iti kṣaṇānaṃ hi catuṣṭaye ratā",
  "SA21n1416:141": "dvayaṃdvayaṃ prāpya bhavanti sādhavaḥ || 27 ||",
  "SA21n1416:142": "kṣaṇe vicitre surataṃ vahirbahu",
  "SA21n1416:143": "kṣaṇe vipāke tu sukhasya vedanā |",
  "SA21n1416:144": "kṣaṇe virbheda pariniṣṭhitaṃ sukhe",
  "SA21n1416:145": "vilakṣaṇaṃ tad yadakalpitaṃ kṣaṇaṃ || 28 ||",
  "SA21n1416:146": "idaṃ hi sarvaṃ sahajaṃ parāparaṃ",
  "SA21n1416:147": "vyatītarūpaṃ yadidaṃ ca rūpavat |",
  "SA21n1416:148": "tadeva siddheḥ pathikāḥ kathaṃ cana",
  "SA21n1416:149": "pramānti vai kuṃduruyogajakṣaṇe || 29 ||",
  "SA21n1416:150": "tanoti tṛptiṃ sukhasīkaraḥ pṛthak",
  "SA21n1416:151": "mahāsukhādatra mahārṇavopamāt |",
  "SA21n1416:152": "paraṃtu tattvaṃ na tadeva vidyate",
  "SA21n1416:153": "tadaṃśumātraṃ paramārthamāmṛti || 30 ||",
  "SA21n1416:154": "mahāsukhaṃ tanmanasāvikalpitaṃ",
  "SA21n1416:155": "sadāgatirgantumalaṃ na vartate |",
  "SA21n1416:156": "raveḥ pravṛttirna ca śarvarīpater",
  "SA21n1416:157": "na rāgiṇāṃ tatra gatirvirāgiṇāṃ || 31 ||",
  "SA21n1416:158": "niraṃjanaṃ tat sahajaṃ gatadvayaṃ",
  "SA21n1416:159": "mahāsukhaṃ tat khasamaṃ hyacittakaṃ |",
  "SA21n1416:160": "rase samaṃ tattvaphalāmanaskriyaṃ",
  "SA21n1416:161": "tathāgatastat paramārthanivṛtiḥ || 32 ||",
  "SA21n1416:162": "bhaved hiraṇyasya bhavedutāyasaḥ",
  "SA21n1416:163": "karoti bandhaṃ nigaḍo na mocarna |",
  "SA21n1416:164": "bhavetsadartho hyasadartha eva vā",
  "SA21n1416:165": "na kalpitārthaḥ paramārtha ucyate || 32 ||",
  "SA21n1416:166": "akalpitārthe na manaḥ pravartate",
  "SA21n1416:167": "vaco varākaṃ tu kathaṃ pravartatāṃ |",
  "SA21n1416:168": "tato hi maunāḥ paramārthadeśane",
  "SA21n1416:169": "tathāgatā yānti munitvabhājanaṃ || 34 ||",
  "SA21n1416:170": "na tat tattvaṃ śūnyaṃ na ca punaraśūnyaṃ vilasati",
  "SA21n1416:171": "pravṛttaṃ bhāvena prasarati na cābhāvamanugaṃ |",
  "SA21n1416:172": "vikalpānāṃ jālaiḥ satatamavadhūtaṃ samarasaṃ",
  "SA21n1416:173": "parokṣe pratyakṣe nayanamanasornāpi viṣayaḥ || 35 ||",
  "SA21n1416:174": "anāmākhyaṃ tattvaṃ bahutaravikalpairiha janāḥ",
  "SA21n1416:175": "sadā nāmnāṃ jālairvividhavidharūpairdiviṣadāṃ |",
  "SA21n1416:176": "paṭhanto dhyāyanto vacanabahulairāgamagaṇair",
  "SA21n1416:177": "ajānanto hyeva prakaṭamupatiṣṭhanti kudhiyaḥ || 36 ||",
  "SA21n1416:178": "sa evaiko devaḥ sakalabahuśākhāgamagaṇaiḥ",
  "SA21n1416:179": "sadā saṃdraṣṭavyaḥ śravaṇamananadhyānavidhibhiḥ |",
  "SA21n1416:180": "tamevātmārāmāṃ sugatatanujāḥ siddhanivahāḥ",
  "SA21n1416:181": "śarīre paśyanto jagati vicaraṃtīha sukṛtaḥ || 37 ||",
  "SA21n1416:182": "duradhigamyamidaṃ sahajaṃ padaṃ",
  "SA21n1416:183": "virala eva janaḥ śṛṇute tataḥ |",
  "SA21n1416:184": "praviralo yatate khalu caryayā",
  "SA21n1416:185": "samadhigacchati yaḥ sa tu durlabhaḥ || 38 ||",
  "SA21n1416:186": "rahasyato'pyatra rahasyamuttamaṃ",
  "SA21n1416:187": "vinirviśantastadidaṃ svacaryayā |",
  "SA21n1416:188": "sukhena gāyanti jinātmasaṃbhavāḥ",
  "SA21n1416:189": "sugītidohāmiranāsavonmadāḥ || 39 ||",
  "SA21n1416:190": "vacāṃsi tānīha parāṃ pavitratāṃ",
  "SA21n1416:191": "bhajanti mantrapratimāṇi gṛḍhatāṃ |",
  "SA21n1416:192": "sadaiva gamyāni rahasyavedimir",
  "SA21n1416:193": "jano'tra ko veda samagrabhāvataḥ || 40 ||",
  "SA21n1416:194": "13 kalyāṇamitrānusmaraṇaṃ",
  "SA21n1416:195": "yathārutārtho vacasāṃ yathā sphuṭo",
  "SA21n1416:196": "bhavedabhīṣṭārthavigāhane kṣamaḥ |",
  "SA21n1416:197": "tathā prayatne vihitādaro'bhavaṃ",
  "SA21n1416:198": "prabodhacandrasya vaco'nupālayan || 41 ||",
  "SA21n1416:199": "viśodhyamāne kriyamāṇaṭippaṇau",
  "SA21n1416:200": "vimudyramāṇe yugapad yathākṣaṇaṃ |",
  "SA21n1416:201": "yadābhavad grantha ihālpamudrito",
  "SA21n1416:202": "divaṃ prabodho'tra gato vihāya naḥ || 42 ||",
  "SA21n1416:203": "ṣaṣṭhyāṃ hi pauṣaśuklasya budhavārāntime kṣaṇe |",
  "SA21n1416:204": "guruvārapravṛttestu pūrvaṃ dinakarodavāt || 43 ||",
  "SA21n1416:205": "dhaṃdhāvāre ( 2499)",
  "SA21n1416:206": "hi bhuvane nirvṛte lokanāyake |",
  "SA21n1416:207": "dvandvaikavyomanayane ( 3012)",
  "SA21n1416:208": "vikramārkasya vatsare || 44 ||",
  "SA21n1416:209": "prabodhacandraḥ śrīmān bāgacīvaṃśanandanaḥ |",
  "SA21n1416:210": "asmākaṃ paśyatāmeva skandhaśāntimavāptavān || 45 ||",
  "SA21n1416:211": "tasyātyantaviyoge'smin mānasaṃ stabdhatāṃ gataṃ |",
  "SA21n1416:212": "saṃdṛṣṭāśca diśaḥ śūnyāstamo vyāptaṃ hi sarvataḥ || 46 ||",
  "SA21n1416:213": "api cāsyāmavasthāyāṃ tatpuṇyasmaraṇena ca |",
  "SA21n1416:214": "yatnena śodhito granthaṣṭippaṇībhiryathā purā || 47 ||",
  "SA21n1416:215": "tasyaivādiṣṭamārgeṇa tatkṛtīḥ pravilokya ca |",
  "SA21n1416:216": "ūhena ca svakenāpi yathābuddhibalaṃ mayā || 48 ||",
  "SA21n1416:217": "tadatra kukṛtaṃ yadyat tanmaivālpamedhasaḥ |",
  "SA21n1416:218": "yadyaddhi sukṛtaṃ sarvaṃ tattasyaiva mahādhiyaḥ || 49 ||",
  "SA21n1416:219": "namāmi taṃ mahodāramānasaṃ puṇyakīrtanaṃ |",
  "SA21n1416:220": "amṛtenātra varṇana yo hyanusmaryate'niśaṃ || 50 ||",
  "SA21n1416:221": "carcā nṛṇāmiha mukhe mukha eva yasya",
  "SA21n1416:222": "yo vidyayātra bhavatīha jano'rcanīyaḥ |",
  "SA21n1416:223": "yenātra śodhanavidhardṛḍhabījamuptaṃ",
  "SA21n1416:224": "taṃ svargataṃ suhṛdamatra namāmi bhaktyā || 51 ||",
  "SA21n1416:225": "vācāmadhīśvaramudāravicāravantaṃ",
  "SA21n1416:226": "vidyādhimuktimanasaṃ mṛducittavantaṃ |",
  "SA21n1416:227": "sacchātravṛndasahakarmigaṇānavantaṃ",
  "SA21n1416:228": "krīto guṇairhi bhavato'tra nato bhavantaṃ || 52 ||",
  "SA21n1416:229": "candraṃ vilokya janatāstamupetavantaṃ",
  "SA21n1416:230": "dhīrā bhavatyudaoakālamapekṣamāṇā |",
  "SA21n1416:231": "atyantameva suhṛdīha gate'tra candre",
  "SA21n1416:232": "dharyaṃ bhavenmama kathaṃ nu mahāndhakāre || 53 ||",
  "SA21n1416:233": "nāma tvadīyamamṛtaṃ rasanāvalehyaṃ",
  "SA21n1416:234": "smartuṃ nidhirnu bhavato'tra vacovilāsaḥ |",
  "SA21n1416:235": "lekhastavāsti sakalo'dhyayanasya pātraṃ",
  "SA21n1416:236": "tvaṃ nāsi kintu vapuṣātra sadānamasyaḥ || 54 ||",
  "SA21n1416:237": "śūnyaṃ jagat sakalameva jino'nuśāsti",
  "SA21n1416:238": "prāpnoti kālavaśataḥ sakalo'tra śūnyaṃ |",
  "SA21n1416:239": "nirmānti kāyamiha lokahitāya buddhāḥ",
  "SA21n1416:240": "taṃ kintu kālamatigamya na dhartumīśāḥ | 55 ||",
  "SA21n1416:241": "yā śūnyatā harati pāṃḍudalānyaraṇye",
  "SA21n1416:242": "yā nūtāni kurute mṛdupatrakāṇi |",
  "SA21n1416:243": "yāmantareṇa gatirasti na hi prapaṃce",
  "SA21n1416:244": "sarveśvarī jayati sā vigataprapaṃcā || 56 ||",
  "SA21n1416:245": "karuṇāśūnyate yasya mahatyau deśane śubha |",
  "SA21n1416:246": "taṃ nataḥ śūnyarājānaṃ śāntibhikṣustathāgataṃ || 57 ||"
}