{
  "SA22n1419:0": "[2]",
  "SA22n1419:1": "anuttarasandhirityaparanāmā",
  "SA22n1419:2": "sarvaśuddhiviśuddhikramaḥ dvitīyaḥ",
  "SA22n1419:3": "namaḥ śrīvajrasattvāya",
  "SA22n1419:4": "namaste'stu namaste'stu namaste'stu namo namaḥ |",
  "SA22n1419:5": "evaṃ stute namaste'stu kaḥ stotā kaśca saṃstutaḥ ||1 ||",
  "SA22n1419:6": "yathā jalaṃ jale nyastaṃ ghṛtaṃ caiva yathā ghṛte |",
  "SA22n1419:7": "svakīyaṃ ca svayaṃ paśyej jñānaṃ yatreha vandanā ||2 ||",
  "SA22n1419:8": "kintu sarvajñagatibhirvinā tannopalabhyate |",
  "SA22n1419:9": "tamaḥpaṭalasañchannaṃ prasādād dvīpamāpnuyāt ||3 ||",
  "SA22n1419:10": "śūnyaṃ ca atiśūnyaṃ ca mahāśunyaṃ tṛtīyakam |",
  "SA22n1419:11": "caturthaṃ sarvaśūnyaṃ ca phalahetuprabhedataḥ ||4 ||",
  "SA22n1419:12": "prajñopāyasamāyogānniṣpannamupalabdhakam |",
  "SA22n1419:13": "upalabdhācca niṣpannāt sarvaśūnyaṃ prabhāsvaram ||5 ||",
  "SA22n1419:14": "hetukramaviśuddhaṃ tu vijñānatrayayogataḥ |",
  "SA22n1419:15": "śūnyatrayasamāyogāllabhyate'nuttaraṃ padam ||6 ||",
  "SA22n1419:16": "ālokaśśūnyaṃ prajñā ca cittaṃ ca paratantrakam |",
  "SA22n1419:17": "tasyedānīṃ pravakṣyāmi prakṛtispharaṇaṃ sphuṭam ||7 ||",
  "SA22n1419:18": "virāgo madhyamaścaiva adhimātrastathaiva ca |",
  "SA22n1419:19": "manogatāgataṃ caiva śokāditṛtīyaṃ tathā ||8 ||",
  "SA22n1419:20": "saumyaṃ vikampo bhītaśca madhyabhīto'tibhītakaḥ |",
  "SA22n1419:21": "tṛṣṇā madhyatṛṣṇā cātitṛosṇoopādānakaṃ tathā ||9 ||",
  "SA22n1419:22": "niḥśubhaṃ kṣuttṛṣā caiva vedanā samavedanā |",
  "SA22n1419:23": "ativedanā kṣaṇaścaiva vettividdhāraṇāpadam ||10 ||",
  "SA22n1419:24": "pratyavekṣaṇaṃ lajjā ca kāruṇyaṃ snehatastrayam |",
  "SA22n1419:25": "cakitaṃ saṃśayaścaiva mātsaryaṃ ceti kīrtitāḥ ||11 ||",
  "SA22n1419:26": "trayastriṃśat prakṛtayaḥ svasaṃvedyāḥ śarīriṇām |",
  "SA22n1419:27": "saṃvṛtisphuṭarupeṇa niśāsaṃjñā pradarśitāḥ ||12 ||",
  "SA22n1419:28": "strīsaṃjñā tathā proktā mandākārā tathaiva ca |",
  "SA22n1419:29": "vāmasaṃjñā punaścaiva candramaṇḍalapaṅkajam ||13 ||",
  "SA22n1419:30": "dṛḍhīkaraṇahetutvāt sabinduḥ prathamaḥ svaraḥ |",
  "SA22n1419:31": "niśākarāṃśusaṅkāśa ālokajñānasambhavaḥ ||14 ||",
  "SA22n1419:32": "ālokābhāsamityutkam atiśūnyamupāyakam |",
  "SA22n1419:33": "parikalpitaṃ tathā proktaṃ proktaṃ caitasikaṃ tathā ||15 ||",
  "SA22n1419:34": "rāgo raktaṃ tathā tuṣṭaṃ madhyatuṣṭātituṣṭakam |",
  "SA22n1419:35": "harṣaṇaṃ caiva prāmodyaṃ vismayo hasitaṃ tathā ||16 ||",
  "SA22n1419:36": "hlādanāliṅganaṃ caiva tathā cumbanacūṣaṇam |",
  "SA22n1419:37": "dhairyaṃ vīryaṃ ca mānaśca kartṛhartṛbalāni ca ||17 ||",
  "SA22n1419:38": "utsāhaḥ sāhasaṃ caiva tathā cottamasāhasam |",
  "SA22n1419:39": "madhyamaṃ sāhasaṃ rādraṃ vilāso vairameva ca ||18 ||",
  "SA22n1419:40": "śubhaṃ ca vāk sphuṭā satyamasatyaṃ niścayastathā |",
  "SA22n1419:41": "nirupādānadātṛtve codanaṃ śūratā tathā |",
  "SA22n1419:42": "alajjā dhūrtaduṣṭaśca haṭhaḥ kuṭila eva ca |",
  "SA22n1419:43": "catvāriṃśat prakṛtayaḥ kṣaṇikāścātiśūnyajjāḥ ||20 ||",
  "SA22n1419:44": "divāpuruṣasaṃjñā ca kharākāraśca dakṣiṇaḥ |",
  "SA22n1419:45": "sūryamaṇḍalasaṃjñā ca vajrasaṃjñā tathaiva ca ||21 ||",
  "SA22n1419:46": "kalā saiva tu vijñeyā bindudvayavibhūṣitā |",
  "SA22n1419:47": "divākarāṃśuisaṅkāśā ālokābhāsayogajā ||22 ||",
  "SA22n1419:48": "ālokasyopalabdhiśca upalabdhaṃ tathaiva ca |",
  "SA22n1419:49": "pariniṣpannakaṃ caiva avidyā caiva nāmataḥ ||23 ||",
  "SA22n1419:50": "mahāśūnyapadasyaite paryāyāḥ kathitā jinaiḥ |",
  "SA22n1419:51": "madhyarāgakṣaṇaścaiva vismṛtirbhrāntireva ca ||24 ||",
  "SA22n1419:52": "tūṣṇīṃbhāvaśca khedaśca ālasyaṃ dandhatā tathā |",
  "SA22n1419:53": "avidyāyāḥ kṣaṇāḥ sapta vijñeyāḥ sukṣmayogibhiḥ ||25 ||",
  "SA22n1419:54": "na bījaṃ vindusaṃyuktaṃ na vāyurdvāranirgataḥ |",
  "SA22n1419:55": "yadālokopalabdhaṃ tu tat pariniṣpannalakṣaṇam ||26 ||",
  "SA22n1419:56": "etāḥ prakṛtayaḥ sūkṣmāḥ śataṃ ṣaṣṭyuttaraṃ divā |",
  "SA22n1419:57": "rātrau cāpi pravartante vāyuvāhanahetunā ||27 ||",
  "SA22n1419:58": "kṣaṇe lave muhūrtte ca nimeṣe mātrake tathā |",
  "SA22n1419:59": "kṣaṇa ityacchaṭāvasthā lavaḥ sarṣapavartanam ||28 ||",
  "SA22n1419:60": "āśvāsastu muhūrttaṃ syānnimeṣo'kṣinimeṣaṇam |",
  "SA22n1419:61": "mātrā tu hastatālaṃ syāt kṣaṇādīnāṃ tu lakṣaṇam ||29 ||",
  "SA22n1419:62": "saṃvittimātrakaṃ jñānamākāśavadalakṣaṇam |",
  "SA22n1419:63": "kintu tasya prabhedo'sti sandhyārātridivātmanā ||30 ||",
  "SA22n1419:64": "ālokālokābhāsau ca tathālokopalabdhakam |",
  "SA22n1419:65": "cittaṃ trividhamityuktam ādhārastasya kathyate ||31 ||",
  "SA22n1419:66": "vāyunā sūkṣmarūpeṇa jñānaṃ sammiśratāṃ gatam |",
  "SA22n1419:67": "niḥsṛtyendriyamārgemyo viṣayānavalambate ||32 ||",
  "SA22n1419:68": "ābhāsena yadā yukto vāyurvāhanatāṃ gataḥ |",
  "SA22n1419:69": "tadā tatprakṛtīḥ sarvā astavyastāḥ pravartayet ||33 ||",
  "SA22n1419:70": "yatra yatra sthito vāyustāṃ tāṃ prakṛtimudvahet |",
  "SA22n1419:71": "yāvat samīraṇotpādo nābhāso niścalo bhavet ||34 ||",
  "SA22n1419:72": "ābhāsadvayahetuḥ syādātmabhāvavikalpanā |",
  "SA22n1419:73": "ubhayāṃśikameva syād yadālokopalabdhakam ||35 ||",
  "SA22n1419:74": "sarvāsāmeva māyānāṃ strīmāyaiva viśiṣyate |",
  "SA22n1419:75": "jñānatrayaprabhedo'yaṃ sphuṭamatraiva lakṣyate ||36 ||",
  "SA22n1419:76": "rāgaścaiva virāgaśca dvarorantariti trayam |",
  "SA22n1419:77": "dvīndriyasya samāpattyā vajrapadmasamāgamāt ||37 ||",
  "SA22n1419:78": "jñānadvayasamāyogaḥ samāpattiḥ prakīrtītā |",
  "SA22n1419:79": "jñānadvayasamāpattyā yathoktakaraṇena tu ||38 ||",
  "SA22n1419:80": "yajjñānaṃ prāpyate yatnāt tadālokopalabdhakam |",
  "SA22n1419:81": "yasya vajrābjasaṃyogaḥ saṃvṛtyā tu na vidyate ||39 ||",
  "SA22n1419:82": "sidhyate yogasāmarthyāt sakṛdapyanubhūtavān |",
  "SA22n1419:83": "yathā prabhedaṃ vijñāya jñānavṛttiṃ svabhāvataḥ ||40 ||",
  "SA22n1419:84": "lakṣayet satataṃ yogī tāmeva prakṛtiṃ punaḥ |",
  "SA22n1419:85": "payodharā yathā naike nānāsaṃsthānavarṇakāḥ ||41 ||",
  "SA22n1419:86": "udbhūtā gaganābhogāllayaṃ gacchanti tatra vai |",
  "SA22n1419:87": "evaṃ prakṛtayaḥ sarvā ābhāsatrayahetukāḥ ||42 ||",
  "SA22n1419:88": "nirviśya viṣayān kṛtsnān praviśanti prabhāsvaram |",
  "SA22n1419:89": "eṣāṃ svabhāvābijñānadajñānapaṭalāvṛtāḥ ||43 ||",
  "SA22n1419:90": "kṛtvā śubhāśubhaṃ karma bhramanti gatipañcake |",
  "SA22n1419:91": "ānantaryādikaṃ kṛtvā narakeṣu vipacyate ||44 ||",
  "SA22n1419:92": "śubhaṃ dānādikaṃ kṛtvā svargādiṣu mahīyate |",
  "SA22n1419:93": "anantajanmasāhasraṃ prāpya caivaṃ punaḥ punaḥ ||45 ||",
  "SA22n1419:94": "pūrvakarmavipāko'yamiti śocati mohataḥ |",
  "SA22n1419:95": "prakṛtyābhāsayogena yena kliśyanti jantavaḥ ||46 ||",
  "SA22n1419:96": "jñātvā tameva mucyante jñānino bhavapañjarāt |",
  "SA22n1419:97": "prajñāsvabhāva evāyaṃ candramaṇḍalakalpanā ||47 ||",
  "SA22n1419:98": "cittameva svayaṃ paśyet svameva śaśibimbavat |",
  "SA22n1419:99": "atha candraṃ samālambya vajracinhaṃ prakalpayet ||48 ||",
  "SA22n1419:100": "upāyasūcakaṃ hyetad vajrādyutpattiyoginām |",
  "SA22n1419:101": "candravajrādisaṃyogaścittacaitasasaṅgamaḥ ||49 ||",
  "SA22n1419:102": "prajñopāyasamāyogājjāyate devatākṛtiḥ |",
  "SA22n1419:103": "caturmudrābhirāmudrya devatāgarvamudvahan ||50 ||",
  "SA22n1419:104": "vicaret tu sadā mantrī utpattikramayogavān |",
  "SA22n1419:105": "yathoktaṃ śrīsamājādau tatra tatra suvistaram ||51 ||",
  "SA22n1419:106": "yāvat syād bhāvanāyogastāvat syādādikarmikaḥ |",
  "SA22n1419:107": "pariniṣpannayogasya sūcana kriyate'dhunā ||52 ||",
  "SA22n1419:108": "śūnyatrayaviśuddhiryā prabhāsvaramihocyate |",
  "SA22n1419:109": "sarvaśūnyapadaṃ tacca jñānatrayaviśuddhitaḥ ||53 ||",
  "SA22n1419:110": "jñānaśuddhipadaṃ tattvaṃ sarvajñatvamanuttaram |",
  "SA22n1419:111": "nirvikāraṃ nirābhāsaṃ nirdvandvaṃ paramaṃ śivam ||54 ||",
  "SA22n1419:112": "astīti na ca nāstīti na ca vākyagocaram |",
  "SA22n1419:113": "ataḥ prabhāsvarāccūddhājjñānatrayasamudbhavaḥ ||55 ||",
  "SA22n1419:114": "dvātriṃśallakṣaṇadharo hyaśītivyañcanānvitaḥ |",
  "SA22n1419:115": "sarvākāravaropetaḥ sarvajño jāyate tataḥ ||56 ||",
  "SA22n1419:116": "tathā coktaṃ mahāyānasūtre lalitavistare |",
  "SA22n1419:117": "abhisambodhikāmo'yaṃ śākyasiṃhastathāgataḥ ||57 ||",
  "SA22n1419:118": "mahāśūnyena buddhatvaṃ prāpsyāmītyabhimānataḥ |",
  "SA22n1419:119": "nairañcanānadītīre nispādyāsphānakaṃ gataḥ ||58 ||",
  "SA22n1419:120": "tilabimbīva sampūrṇāḥ khamadhyasthā jināstadā |",
  "SA22n1419:121": "ekasvareṇa taṃ prāhuracchaṭena jinaurasam ||59 ||",
  "SA22n1419:122": "aviśuddhamidaṃ dhyānaṃ na caitadiṣṭakāvaham |",
  "SA22n1419:123": "prabhāsvaraṃ ātu ālambyamākāśatalavat param ||60 ||",
  "SA22n1419:124": "prabhāsvarapade prāpte svecchārūpastu jāyase |",
  "SA22n1419:125": "savaiśvaryaṃ tathā prāpya vajrakāye pramodase ||61 ||",
  "SA22n1419:126": "evaṃ śrutvā tu taṃ śbdaṃ visarjyāsphānakaṃ tataḥ |",
  "SA22n1419:127": "niśārdhasamaye tattvamālambyaiva jinaurasaḥ ||62 ||",
  "SA22n1419:128": "ṛjukenaiva kāyena vācāya ṛjureva ca |",
  "SA22n1419:129": "sāśano nāśano naiva na maunī nāpyamaunavān ||63 ||",
  "SA22n1419:130": "nonmīlitasunetrastu na ca mīlitalocanaḥ |",
  "SA22n1419:131": "svacchaṃ vyaktaṃ mahājñānaṃ sarvaśūnyaṃ mahādbhutam ||64 ||",
  "SA22n1419:132": "atha paśyati tadvayaktaṃ gurupādaprasādataḥ |",
  "SA22n1419:133": "anāgatamatītaṃ ca vartamānaṃ bhavatrayam ||65 ||",
  "SA22n1419:134": "tatkṣaṇānnikhilaṃ paśyet prabhāsvaraviśuddhadhṛk |",
  "SA22n1419:135": "jalacandramarīcyādimāyāguṇavibhūṣitaḥ ||66 ||",
  "SA22n1419:136": "aruṇodgamakāle tu vajropamasamādhinā |",
  "SA22n1419:137": "niṣadya bodhimūle tu so'karonmārabhañcanam ||67 ||",
  "SA22n1419:138": "samprāpya śākyanāthena tattvajñānamanuttaram |",
  "SA22n1419:139": "jagattrayahitārthāya tadeveha pradarśitam ||68 ||",
  "SA22n1419:140": "tattvajñānamiti proktamabhisambodhidarśanam |",
  "SA22n1419:141": "pañcānantaryakarmā ca mandapuṇyo'pi yo naraḥ ||69 ||",
  "SA22n1419:142": "guruprasādādāpnoti cintāmaṇirivāparam |",
  "SA22n1419:143": "yatheṣṭaṃ kurute caryāṃ saṃbuddho'yamanāgataḥ ||70 ||",
  "SA22n1419:144": "na rāgo na virāgaśca madhyamā nopalabhyate |",
  "SA22n1419:145": "na śūnyaṃ nāpi cāśūnyaṃ madhyamā nopalabhyate ||71 ||",
  "SA22n1419:146": "sarvabuddhasamāyoga idameva pradarśitam |",
  "SA22n1419:147": "trijñānād vyatiriktaṃ yat tattvaṃ sandhyāya bhāṣayā ||72 ||",
  "SA22n1419:148": "abhāvetyādigāthābhiḥ paṭale bodhicittake |",
  "SA22n1419:149": "śrīsamāje'pi tat proktamabhisambodhilakṣaṇam ||73 ||",
  "SA22n1419:150": "rāgādīnāṃ viśuddhiryā paramādye pradarśitā |",
  "SA22n1419:151": "sarvaśūnyaṃ samuddiśya sā'pi proktā tathāgataiḥ ||74 ||",
  "SA22n1419:152": "nānāsūtreṣu tantreṣu yat tattvamupadarśitam |",
  "SA22n1419:153": "sarvaśūnyapadaṃ hyetannānyat tatrābhidhīyate ||75 ||",
  "SA22n1419:154": "caturaśītisāhasre dharmaskandhe mahāmuneḥ |",
  "SA22n1419:155": "sārāt sārataraṃ proktam abhisambodhilakṣaṇam ||76 ||",
  "SA22n1419:156": "jaṭī nagnaśca muṇḍī vā śikhiniḥsaṅgavṛttayaḥ |",
  "SA22n1419:157": "taistaiśca vividhairliṅgairabhisambodhikāminaḥ ||77 ||",
  "SA22n1419:158": "teṣāṃ tattvavihīnānāṃ vratacaryādikaḥ kramaḥ |",
  "SA22n1419:159": "tattvajñānavihīnatvāt tena muktirna labhyate ||78 ||",
  "SA22n1419:160": "ādikarmikayogena cāṣṭamīṃ bhūmimāpnuyāt |",
  "SA22n1419:161": "ālokatrayadarśī ca daśabhūmyāṃ pratiṣṭhitaḥ ||79 ||",
  "SA22n1419:162": "samprāpya hyabhisambodhiṃ śuddhāvāsamupāgataḥ |",
  "SA22n1419:163": "buddhakṣetresvavaivartī sarvajña iha janmani ||80 ||",
  "SA22n1419:164": "dharmodayābhisambodhiḥ krīḍārāgādivistaraiḥ |",
  "SA22n1419:165": "dharmadhātvābhisamabodhiryathālābhaviceṣṭitaiḥ ||81 ||",
  "SA22n1419:166": "anutarābhisambodhirabhisambodhiyogataḥ |",
  "SA22n1419:167": "prapañcākārādicaryābhirabhyasyantīha yoginaḥ ||82 ||",
  "SA22n1419:168": "āḥ kimabhyāsayogena ādiśuddhiḥ svabhāvikā |",
  "SA22n1419:169": "prakṛtyaiva hi sā siddhā tathatā na vikalpajā ||83 ||",
  "SA22n1419:170": "ya evaṃ kalpayantīha jñānakramamapāsya vai |",
  "SA22n1419:171": "tatprabhedamajānānāḥ punaḥ śaikṣā bhavanti te ||84 ||",
  "SA22n1419:172": "prakṛtyābhāsabhedajñā caturthaṃ tattvamāśritāḥ |",
  "SA22n1419:173": "tridhā nābhyasyate yastu na śīghramāpnuyāt phalam ||85 ||",
  "SA22n1419:174": "yathāgnirdārugarbhastho nottiṣṭhenmathanād vinā |",
  "SA22n1419:175": "tathābhyāsād binā bodhirjāyate neha janmani ||86 ||",
  "SA22n1419:176": "yaḥ śāṭhyabuddhiralaso gurunindakaśca",
  "SA22n1419:177": "prāptābhiṣeka iti garvitamānasaḥ syāt |",
  "SA22n1419:178": "sarvajñatā na sulabheti vihīnacitto",
  "SA22n1419:179": "doṣān sa paśyati gurorna guṇān varākaḥ ||87 ||",
  "SA22n1419:180": "sūśrūṣayā virahito laghu tattvamicchen",
  "SA22n1419:181": "neti praśstavacanaṃ calayet saroṣaḥ |",
  "SA22n1419:182": "dṛṣṭvā sabhāsu gurumasya parāṅmukhastu",
  "SA22n1419:183": "kuryāt praṇāmamatha tasya rahogatasya ||88 ||",
  "SA22n1419:184": "evaṃ ca daurātmyagataṃ kuśiṣyam",
  "SA22n1419:185": "svaputramapyaurasamāryagarhyam |",
  "SA22n1419:186": "vaiśyaṃ tathā pārthivamagrabodhiṃ",
  "SA22n1419:187": "kuryāt samīpe na hi jātu dhīraḥ ||89 ||",
  "SA22n1419:188": "śubhaguṇasusameto jñānavān vīryayukto",
  "SA22n1419:189": "gurujanamatha bhaktyā vīkṣate buddhatulyam |",
  "SA22n1419:190": "adhigatajinadharmaḥ śāsaneṣu prasannaḥ",
  "SA22n1419:191": "sa iha bhavati pātraṃ tasya kuryāt prasādam ||90 ||",
  "SA22n1419:192": "śrutabahutaratantro'uyāgameṣu pravīṇo",
  "SA22n1419:193": "gurujanaparicaryāhānyalabdhopadeśaḥ |",
  "SA22n1419:194": "svahitamapi sa kartuṃ na prabhuḥ śāstracañcu-",
  "SA22n1419:195": "rbhavati tadapi śāstraṃ kevalaṃ khedahetuḥ ||91 ||",
  "SA22n1419:196": "atha bhavati sabhāgyaḥ prāptatattvopadeśo",
  "SA22n1419:197": "jaḍamatirasamartho mīlane'rthasya yastu |",
  "SA22n1419:198": "parahitakṛtabuddhirdeśanāyāṃ pravṛtto",
  "SA22n1419:199": "vacanaguṇavihīnaḥ so'pyavajñāmupaiti ||92 ||",
  "SA22n1419:200": "śrutabahutaratantro jñānavān ṣaṭpadajñaḥ",
  "SA22n1419:201": "smṛtimatidhṛtimedhāvīryasampatsametaḥ |",
  "SA22n1419:202": "gurucaṇasaparyāprāptatattvopadeśaḥ",
  "SA22n1419:203": "prabhavati sa hi vaktuṃ tantrarājopadeśam ||93 ||",
  "SA22n1419:204": "śrutabahutaratantreṇāyavajriprasādāt",
  "SA22n1419:205": "sphuṭaviracitavācā bodhimārgaṃ vibhajya |",
  "SA22n1419:206": "kuśalamupacittaṃ yacchākyamitreṇa tena",
  "SA22n1419:207": "prakaṭapaṭuvipākād bodhibhājo bhavantu ||iti |94 ||",
  "SA22n1419:208": "anuttarasandhirityaparanāmā",
  "SA22n1419:209": " ||sarvaśuddhiviśuddhikramaḥ samāptaḥ ||",
  "SA22n1419:210": "kṛtiriyaṃ śākyamitrapādānām |",
  "SA22n1419:211": "granthapramāṇamasya śatamekam |",
  "SA22n1419:212": "dvitīyaḥ kramaḥ |"
}