{
  "SA05n854:0": "mañjuśrīstotram",
  "SA05n854:1": "śrīmañjunāthakamalāsanaratnamauli-",
  "SA05n854:2": "rvidyādhipo bhuvanamaṇḍalacakravartī |",
  "SA05n854:3": "dhyānādhipocitavirājitasaumyarūpo",
  "SA05n854:4": "vandāmahe suranarāsuravanditāryam || 1 ||",
  "SA05n854:5": "bālākṛtiḥ kuvalayojjvalalolahastaḥ",
  "SA05n854:6": "keyūrahāramaṇikuṇḍalaghṛṣṭagaṇḍaḥ |",
  "SA05n854:7": "khādaṃśca ṣoḍaśaradaṃ sukumārarūpaṃ",
  "SA05n854:8": "vandāmahe suravarārcitamañjughoṣam || 2 ||",
  "SA05n854:9": "romāgrakūpavivare parivartamānaṃ",
  "SA05n854:10": "viśvaprapañcakaraṇaṃ sugatātmajasya |",
  "SA05n854:11": "traividyamantra tava nātha guṇārṇaveṇa",
  "SA05n854:12": "sūkṣmāya buddhatanayāya namo'stu tasmai || 3 ||",
  "SA05n854:13": "gambhīradharmanayamārgasukhapratiṣṭhaṃ",
  "SA05n854:14": "jñānodadhiṃ nikhilasattvakṛtārthakāram |",
  "SA05n854:15": "prajñānidhānaguṇasāgaramaprameyaṃ",
  "SA05n854:16": "mañjuśriyaṃ jinasutaṃ satataṃ namāmi || 4 ||",
  "SA05n854:17": "viditasakalatattvaḥ kṣiptasantāpasattva-",
  "SA05n854:18": "stribhuvana upakārī sarvaduḥkhāpahārī |",
  "SA05n854:19": "madanamathanavīraścārurūpaḥ sucīra-",
  "SA05n854:20": "stribhuvanajanatoṣaḥ pātu māṃ mañjughoṣaḥ || 5 ||",
  "SA05n854:21": "bālendurucirābhāsaṃ varābharaṇabhūṣitam |",
  "SA05n854:22": "prajñābjāmalapatrākṣaṃ vande mañjuśriyaṃ sadā || 6 ||",
  "SA05n854:23": "pātraṃ vāmakare yasya bhramannañjalisaṃnibham |",
  "SA05n854:24": "nāmnā te sarvato lakṣmīrmañjughoṣaṃ namāmyaham || 7 ||",
  "SA05n854:25": "khaḍgapustakahastāya candramaṇḍalavartine |",
  "SA05n854:26": "ajñānadhvāntasūryāya mañjughoṣāya te namaḥ || 8 ||",
  "SA05n854:27": "jñānottaraprabhāketuṃ praṇidhānamatiṃ tathā |",
  "SA05n854:28": "śāntendriyaṃ mañjughoṣaṃ bhaktitaḥ praṇamāmyaham || 9 ||",
  "SA05n854:29": "śrī mañjuśrīstavastotraṃ samāptam ||"
}