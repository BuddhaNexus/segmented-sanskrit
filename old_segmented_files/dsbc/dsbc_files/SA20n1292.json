{
  "SA20n1292:0": "maitreyanāthakṛtā bhavasaṅkrāntiṭīkā",
  "SA20n1292:1": "namaḥ sarvajñāya",
  "SA20n1292:2": "bhāvābhāvānna janmāsti iti |",
  "SA20n1292:3": "bījādvīja utpadyamāne ghaṭādapi ghaṭotpattiryujyeta |",
  "SA20n1292:4": "ātmakriyāniṣedhāt [bījāt] bījotpattirna saṃbhavati |",
  "SA20n1292:5": "pañcavidhabhūtapariṇāmadharmatā,",
  "SA20n1292:6": "pratītyasamutpādadharmatā |",
  "SA20n1292:7": "evaṃ sati śubhāśubhamucchinnabhāraṃ kenacit dṛśyeta |",
  "SA20n1292:8": "tattu mūṣikādantodgīrṇaviṣameghagarjanaglāna [bīja]vannotpannam |",
  "SA20n1292:9": "pratītyasamutpādadharmatā |",
  "SA20n1292:10": "tena na bhāvādutpattidharmatā ||",
  "SA20n1292:11": "tasya bhāvasyacāsataḥ |",
  "SA20n1292:12": "janmādānaṃ saṃbhavati iti |",
  "SA20n1292:13": "evaṃ sati bhāvāsyāsata utpattau vandhyāsutaḥ gaganakusumaṃ śaśaśṛṅgañca saṃbhavet |",
  "SA20n1292:14": "evamasaṃbhavāt utpattirna saṃbhavati |",
  "SA20n1292:15": "nahyagnimadhye nikṣiptabījasya janma saṃbhavati |",
  "SA20n1292:16": "ucyate tu bhāvasya tasyāsato janmopādānaṃ bhavati [iti] |",
  "SA20n1292:17": "yathā prasannajalapūrṇasarasi śaivālaṃ padmañcotpadyate |",
  "SA20n1292:18": "uttarāraṇyadharāraṇibhyāmagnirutpadyate |",
  "SA20n1292:19": "utpattau satyāmapi ko doṣaḥ syāt |",
  "SA20n1292:20": "nityabhāvādutpannātmakamiṣyate |",
  "SA20n1292:21": "maivam | bhrānti |",
  "SA20n1292:22": "indriyairupalabdhaṃ yattattattvena bhavedyadi |",
  "SA20n1292:23": "bālāstattvavido jātāḥ na jñeyatattvakāraṇam ||",
  "SA20n1292:24": "[uktaṃ] laṅkāvatārasūtre |",
  "SA20n1292:25": "astitvaṃ sarvabhāvānāṃ yathā bālairvikalpyate |",
  "SA20n1292:26": "yadi te bhavedyathādṛṣṭāḥ sarvesyustattvadarśinaḥ ||",
  "SA20n1292:27": "anyatra uktam |",
  "SA20n1292:28": "na cakṣuḥ prekṣate rūpaṃ lokastu parimohataḥ |",
  "SA20n1292:29": "pravartate hyakṣamārge svabhāvastasya tādṛśaḥ ||",
  "SA20n1292:30": "yathā māyāmarīcisvapnapratiśrutkendradhanurudakacandrabimbanirmitamāyānagaravikalpaḥ |",
  "SA20n1292:31": "śūrapādairapyuktam |",
  "SA20n1292:32": "sadasacca mṛtaṃ jātaṃ tannirūddha yadasti na |",
  "SA20n1292:33": "bhāvotpādakameveti lakṣaṇaṃ bhāvadarśinām ||",
  "SA20n1292:34": "bhāvadṛṣṭyā khalu bhrāntaṃ yathā khapuṣpacintanam |",
  "SA20n1292:35": "dharmatā hi nabhastulyā | iti |",
  "SA20n1292:36": "ākāśasamabhāvasya śūnyatvena utpattibhaṅgadoṣamalālepāt dharmatāmātraṃ rūpavedanādayaḥ |",
  "SA20n1292:37": "te gaganasamāḥ |",
  "SA20n1292:38": "jananāntare pratītyasamāgamenotpadyante |",
  "SA20n1292:39": "tacca sāṃvṛt loke |",
  "SA20n1292:40": "paramārthasya na virodhi |",
  "SA20n1292:41": "acintyā māyādharmalakṣaṇatā |",
  "SA20n1292:42": "śālistambasūtre |",
  "SA20n1292:43": "[bāhyaḥ] pratītyasamutpādaḥ katamaiḥ pañcabhiḥ kāraṇairdraṣṭavyaḥ |",
  "SA20n1292:44": "[na] svayaṃ śāśvatato nocchedato na saṃkrāntito na svayaṃbhūhetutaḥ na phalavipākābhinirvṛttitastadvisadṛśānuprabandhata [śceti] |",
  "SA20n1292:45": "kathaṃ [na] svayaṃ śāśvatataḥ |",
  "SA20n1292:46": "yasmādvījāṅkurau visadṛśau |",
  "SA20n1292:47": "na caivaṃ yadvījaṃ sa evāṅkura [iti] |",
  "SA20n1292:48": "evaṃ hi bījaṃ niruddhyate |",
  "SA20n1292:49": "aṅkura utpadyate |",
  "SA20n1292:50": "kathaṃ nocchedataḥ |",
  "SA20n1292:51": "na pūrvaniruddhāddhījādaṅkuro niṣpadyate |",
  "SA20n1292:52": "niruddhamatrādvījāttu tatsamaye aṅkura utpadyate |",
  "SA20n1292:53": "tulādaṇḍanāmonnāmavat |",
  "SA20n1292:54": "kathaṃ na saṅkrāntitaḥ |",
  "SA20n1292:55": "bījavisadṛśo hyaṅkuraḥ |",
  "SA20n1292:56": "kathaṃ na svayaṃbhūhetutaḥ |",
  "SA20n1292:57": "ādyaphalasyāsvayaṃbhāvāt |",
  "SA20n1292:58": "kathaṃ na phalavipākābhinirvṛttitaḥ |",
  "SA20n1292:59": "phalasvarūpaṃ siddhyati |",
  "SA20n1292:60": "na hi phalena phalotpattirasti |",
  "SA20n1292:61": "kathaṃ visadṛśānuprabandhataḥ |",
  "SA20n1292:62": "evaṃ pratītya samutpannaistairutpāditaṃ phalam ||",
  "SA20n1292:63": "skandhotpādarītirapiu |",
  "SA20n1292:64": "avidyayā saṃskāro vijñānaṃ nāmarūpaṃ ṣaḍāyatanaṃ pañcaskandhāśca siddhyanti |",
  "SA20n1292:65": "śūnyaireva yotpattistadrūpāṇāṃ svarūpakam |",
  "SA20n1292:66": "pratītyapratyayotpannamevaṃ siddhyā prasiddhyati ||",
  "SA20n1292:67": "evaṃ sā śūnyatā svayaṃbhūtvā rūpaṃ samīkṣyate |",
  "SA20n1292:68": "sarvabhāvaḥ śūnyatā hi śūnyataivaṃ pravartate ||",
  "SA20n1292:69": "evaṃ bāhya ādhyātmikaḥ sarvo dharmaḥ śūnyaḥ |",
  "SA20n1292:70": "svabhāvato bhāvo yena hetusaṃbhūtaḥ ataḥ sarvadharma ākāśasamaḥ |",
  "SA20n1292:71": "evaṃ bhāvo'bhāvaḥ saṃbhavati ||",
  "SA20n1292:72": "na kāraṇaṃ nāpi kāryam ityādinā eṣa lokaḥ paro'pi ca iti paryantam |",
  "SA20n1292:73": "kāraṇena īśvareṇa kṛta iṣyate |",
  "SA20n1292:74": "karmasaṃbhūtaḥ cittamātraṃ vā iṣyate |",
  "SA20n1292:75": "evaṃ neṣyate cet kaḥ śubhāśubhaṃ vahati |",
  "SA20n1292:76": "tīrthikocchedaprasaṅgaḥ |",
  "SA20n1292:77": "tasyottara [mucyate] |",
  "SA20n1292:78": "vastutaḥ satyaṃ na bhavati [lokaḥ] |",
  "SA20n1292:79": "karmasaṃbhūto'pi svapnasadṛśaḥ |",
  "SA20n1292:80": "bhāva evamabhāvatvādajo'san tasya vai ciram |",
  "SA20n1292:81": "pratītyodgamakāle tu karmaṇaḥ phalavedanā ||",
  "SA20n1292:82": "āryasamādhirājasūtre |",
  "SA20n1292:83": "na ca asmi loki mṛti kaści [naro]",
  "SA20n1292:84": "paraloka saṃkramati gacchati vā |",
  "SA20n1292:85": "na ca karma naśyati kadāci kṛtaṃ",
  "SA20n1292:86": "phalu deti [kṛṣṇaśubha] saṃsarato ||",
  "SA20n1292:87": "laṅkāvatārasūtre |",
  "SA20n1292:88": "deśemi śūnyatāṃ nityaṃ śāśvatocchedavarjitām |",
  "SA20n1292:89": "saṃsāraṃ svapnamāyākhyaṃ na ca karma vinaśyati ||",
  "SA20n1292:90": "āryākāśasamatāsamādhisūtre |",
  "SA20n1292:91": "pūrvaṃ kṛtaṃ tanna kṛtaṃ na kṛtaṃ tacchubhāśubham |",
  "SA20n1292:92": "sugatasya pūrvākaraṇāt kṛtaṃ tadapi no bhavet ||",
  "SA20n1292:93": "bodhisattvabodhicittaṃ kṛtaṃ tadapi no bhavet |",
  "SA20n1292:94": "kṛto nirūḍhilābho'pi kṛtaḥ so'pi ca no bhavet ||",
  "SA20n1292:95": "karmāṇi na praṇaśyanti kalpakoṭyantato'pi ca |",
  "SA20n1292:96": "pratītyāgamakāle tu dehināṃ phalavedanā ||",
  "SA20n1292:97": "anutpannarūpameva | iti |",
  "SA20n1292:98": "yadīśvareṇa kathamapi na nirmitam |",
  "SA20n1292:99": "kathaṃ hi loka utpannaḥ |",
  "SA20n1292:100": "vandhyāstrītanayasyāpi kastatra janma janayati |",
  "SA20n1292:101": "lokaḥ prathamato'jātaḥ ityādi |",
  "SA20n1292:102": "ādau svayamanutpannaḥ pratītyasamutpanno bhāvaḥ |",
  "SA20n1292:103": "tasya ca janma īśvarādinā kenāpi nāvatāritam |",
  "SA20n1292:104": "cetanasyādāvajātatvena īśvaraḥ svayamasiddhaḥ |",
  "SA20n1292:105": "pratītyasamutpannasya ca janma neśvareṇāvatāritam |",
  "SA20n1292:106": "laṅkāvatārasūtre |",
  "SA20n1292:107": "saṃbhavaṃ vibhavañcaiva mohātpaśyanti bāliśāḥ |",
  "SA20n1292:108": "na saṃbhavaṃ na vibhavaṃ prajñāyukto vipaśyati ||",
  "SA20n1292:109": "āryasamādhirājasūtre |",
  "SA20n1292:110": "astīti nāstīti ubhe'pi antā",
  "SA20n1292:111": "śuddhī aśuddhīti ime'pi antā |",
  "SA20n1292:112": "tasmādubhe anta vivarjayitvā",
  "SA20n1292:113": "madhye'pi sthānaṃ na karoti paṇḍitaḥ ||",
  "SA20n1292:114": "madhyānte [?]",
  "SA20n1292:115": "yena tarkaḥ kalpamātraṃ talliṅgaṃ niṣphalaṃ sthitam |",
  "SA20n1292:116": "evaṃ tu viduṣā proktaṃ vikalpādvadhyate'dhamaḥ ||",
  "SA20n1292:117": "parikṣamaṇo mucyeta jagattatkaraṇena ca |",
  "SA20n1292:118": "yogī saṃprekṣate śūnyaṃ yathā tamisradarśanaḥ ||",
  "SA20n1292:119": "bhaiṣajyayogādīkṣeta vyutsṛjettimiraṃ ca tat |",
  "SA20n1292:120": "avidyātimirākrāntanetrāḥ saṃbhavaṃ vibhavaṃ dṛḍham ||",
  "SA20n1292:121": "gṛhṇanto vāsanāvaśāt muktyanarhāḥ samīritāḥ ||",
  "SA20n1292:122": "anarthabhrāntaloko hi ityādyuktam |",
  "SA20n1292:123": "kārakavedayitrādi na kiñcidasti |",
  "SA20n1292:124": "mokṣārthākārake paramārthabhrāntaḥ |",
  "SA20n1292:125": "athavā anarthaṃ bhraman bhavasindhurmāyānagarasadṛśaḥ |",
  "SA20n1292:126": "uktamāryadevapādaiḥ |",
  "SA20n1292:127": "bhāvo'bhāvo na dvitayaṃ sadasanmiśrito na saḥ |",
  "SA20n1292:128": "nāpi tattadabhāvādi vicāre'pi ciraṃ kṛte |",
  "SA20n1292:129": "tatpadamatidurbhāṣam |",
  "SA20n1292:130": "sadasadutpannavinaṣṭayat kiñcidbhāvavarjanadharmanairātmyadeśanā parivartaḥ prathamaḥ ||",
  "SA20n1292:131": "adhunā skandhanairātmyaṃ pratipādayan saṃvṛtisatyamāśrityāha lokotpattirītim |",
  "SA20n1292:132": "vikalpāllokasaṃbhavaḥ iti |",
  "SA20n1292:133": "śubhāśubhakalpanā vikalpaḥ |",
  "SA20n1292:134": "tatpratītyasamutpanno lokaḥ |",
  "SA20n1292:135": "śubhāśubhābhyāṃ ṣaṭsu jagadgatiṣu skandhanupādāya loko nāma,",
  "SA20n1292:136": "vikalpena janitaḥ |",
  "SA20n1292:137": "salilaphalādivikalpaśca pratītya gṛhyate |",
  "SA20n1292:138": "janmopādānena cittaṃ pravartane |",
  "SA20n1292:139": "citte ātmagrahaḥ pravartate |",
  "SA20n1292:140": "tato'nyadapi pravartate |",
  "SA20n1292:141": "tacca ratnāvalyāmuktam",
  "SA20n1292:142": "skandhagrāho yāvadasti tāvadevāhamityapi |",
  "SA20n1292:143": "ahaṅkāre sati punaḥ karma janma tataḥ punaḥ ||",
  "SA20n1292:144": "trivartmaitadanādyantamadhyaṃ saṃsāramaṇḍalam |",
  "SA20n1292:145": "alātamaṇḍalaprakhyaṃ bhramatyanyonyahetukam ||",
  "SA20n1292:146": "cittātkāyo'pi jāyate | iti |",
  "SA20n1292:147": "ātmani sati parasaṃjñā svaparavibhāgātparigrahadveṣau |",
  "SA20n1292:148": "anayoḥ saṃpratibaddhāḥ sarve doṣāḥ prajāyante |",
  "SA20n1292:149": "kāye kṛtaparīkṣamātre cittamātramataṃ parīkṣitapūrvavat vidyat |",
  "SA20n1292:150": "bāhyaḥ skandhaḥ parīkṣyate |",
  "SA20n1292:151": "rūpavedanāsaṃjñāśca iti |",
  "SA20n1292:152": "rūpaṃ bhautikaṃ |",
  "SA20n1292:153": "rūpaṃ varṇādyātmakaṃ sadasadubhayānubhayaṃ hetujanitaṃ prajñaptimātram |",
  "SA20n1292:154": "asatyatayā tarkākṣamatvāt phenasadṛśaṃ śūnyatā |",
  "SA20n1292:155": "vedanā sukhaduḥkhātmikā |",
  "SA20n1292:156": "sā ca pratītyasamutpannā asatkāraṇā budbudopamā |",
  "SA20n1292:157": "saṃjñā hi na sadvastu |",
  "SA20n1292:158": "sā hi nāmamātram |",
  "SA20n1292:159": "marīcikāsadṛśī asatī |",
  "SA20n1292:160": "saṃskāro'pi asadvastu,",
  "SA20n1292:161": "bhojanapānatṛṣṇāsukhajanitaḥ |",
  "SA20n1292:162": "tacca pṛthivyādibhūtapratyayena |",
  "SA20n1292:163": "sa ca nirvikalpo bhāvaḥ kadalīsamaḥ |",
  "SA20n1292:164": "tadvijñānaṃ cittamasvatantrotpannalakṣaṇam |",
  "SA20n1292:165": "cittaṃ vikalpamātraṃ māyopamaṃ,",
  "SA20n1292:166": "paramārthato nāsti |",
  "SA20n1292:167": "[prajñā] pāramitāyāmapyuktam |",
  "SA20n1292:168": "cittaṃ sadasadanyasvabhāvarahitaṃ śūnyam |",
  "SA20n1292:169": "citena citte dṛṣṭamātre na kiñciddṛśyate, śūnyam ||",
  "SA20n1292:170": "evaṃ sati tathāgataḥ jaḍaḥ syāt |",
  "SA20n1292:171": "maivam |",
  "SA20n1292:172": "citavijñānavikalpanivṛttikālamātre dharmakāyo labhyate |",
  "SA20n1292:173": "buddhapadalābha eva jñānakāyaḥ |",
  "SA20n1292:174": "sa ca nāsti sa īdṛśo bhāva iti |",
  "SA20n1292:175": "na ca evaṃ sa jñeya iti |",
  "SA20n1292:176": "na ca sthātā |",
  "SA20n1292:177": "nāpi sthitiḥ |",
  "SA20n1292:178": "śavabhūtānaṃ pramāṇakṛtāṃ bālānāṃ vikalpaḥ |",
  "SA20n1292:179": "tathāgato hyatītānāgatapratyutpannajñaḥ abhijñācakṣuṣā sarvaṃ paśyati ||",
  "SA20n1292:180": "caittaṃ cittavikalpaḥ |",
  "SA20n1292:181": "parīkṣā tu pūrvavat |",
  "SA20n1292:182": "phenapiṇḍopamaṃ rūpaṃ vedanā budbudopamā |",
  "SA20n1292:183": "marīcisadṛśī saṃjñā saṃskārāḥ kadalīsamāḥ |",
  "SA20n1292:184": "māyopamaṃ tu vijñāna [muktamādityabandhunā] ||",
  "SA20n1292:185": "skandhanairātmyavijñānairātmyabhāvo vikalpaḥ |",
  "SA20n1292:186": "siddhaḥ |",
  "SA20n1292:187": "yato nāsti vandhyāduhitṛbhartṛvat ||",
  "SA20n1292:188": "skandhanairātmyadeśanaparivarto dvitīyaḥ |",
  "SA20n1292:189": "nairātmyadvayaṃ saṃgṛhya adhunā prajñotpādārthamāha |",
  "SA20n1292:190": "cittābhāvānna dharmo'pi | ityādi |",
  "SA20n1292:191": "dharmaḥ bhāvaḥ kṛtakākṛtakarāśiḥ |",
  "SA20n1292:192": "tatha pṛthivīdhātvādirapi |",
  "SA20n1292:193": "dharmāṇāṃ mūlaṃ cittamiti cittaṃ niṣiddham |",
  "SA20n1292:194": "caittadharmatāyāmuttaraṃ ākṣepoktikathitam |",
  "SA20n1292:195": "anyatroktaṃ buddhena |",
  "SA20n1292:196": "anakṣarasya tattvasya śrutiḥ kā deśanā ca kā |",
  "SA20n1292:197": "śrūyate deśyate cārthaḥ samatā sāhyanakṣarā ||",
  "SA20n1292:198": "apicoktaṃ buddhena |",
  "SA20n1292:199": "saṃvṛticaryāṃ naśritya paramārtho na deśyate |",
  "SA20n1292:200": "paramārthaṃ tamajñātvā nirvāṇaṃ na pravartate ||",
  "SA20n1292:201": "kiñcoktaṃ śāstre |",
  "SA20n1292:202": "yaḥ pratītyasamutpādaḥ śūnyatāṃ tāṃ pracakṣmahe |",
  "SA20n1292:203": "pratītya jāyate yaddhi tadjātaṃ svabhāvataḥ ||",
  "SA20n1292:204": "pratītyopādāya jātaṃ yat[tat] śūnyaṃ hi pracakṣmahe |",
  "SA20n1292:205": "yaḥ śūnyatāṃ prajānāti so'pramattastu paṇḍitaḥ ||",
  "SA20n1292:206": "[iti] bahūktirnirarthikā |",
  "SA20n1292:207": "evamadvayamārgeṇa sarvajñānaṃ buddhasādhanam |",
  "SA20n1292:208": "tasya mārgamimaṃ niścitya jñānārthaṃ ya advayamārgaḥ sa svayamadvayaḥ |",
  "SA20n1292:209": "athavā utpattivināśābhāvena sadasannityānityabhāvābhāvādidvayapratītyabhāvāt advayajñānam |",
  "SA20n1292:210": "evañcādvayaṃ,",
  "SA20n1292:211": "tadubhayasaṃśayānabhidhānaṃ prajñāpāramitājñānam |",
  "SA20n1292:212": "tat jñātvā yaḥ sākṣātkaroti sa tatvajñānāt buddho bhagavān |",
  "SA20n1292:213": "sa buddhaḥ karuṇābalena provāca |",
  "SA20n1292:214": "yāvadavidyāstitvaṃ janmaparigrahaḥ |",
  "SA20n1292:215": "avidyādito nivṛttamatraṃ cet jñānaṃ tattvajñaḥ [syāt] iti ||",
  "SA20n1292:216": "anādhāramidaṃ sarvam | iti |",
  "SA20n1292:217": "nirādhārakaruṇāprajñācakṣuṣā nirātmakam |",
  "SA20n1292:218": "śūnyatākārakavedakavastvādhārābhāvakaruṇāprajñācakṣuṣā nirātmakam |",
  "SA20n1292:219": "śūnyatākārakavedakavastu ādhāro nāsti |",
  "SA20n1292:220": "idaṃ sarvaṃ traidhātukamaśeṣamasat śūnyatā |",
  "SA20n1292:221": "sa hi paramārthaḥ |",
  "SA20n1292:222": "prajñāpāramitāyāmapyuktam |",
  "SA20n1292:223": "subhūtimavocat |",
  "SA20n1292:224": "rūpaṃ na prekṣate | ityādi |",
  "SA20n1292:225": "dvādaśapratītyasamutpādaniṣedhadharmatāyām |",
  "SA20n1292:226": "buddhaguṇanītabhāgīyaṃ dharmakāyaṃ śūnyatāvastu pracakṣate |",
  "SA20n1292:227": "tena hi prajñāpāramitā ||",
  "SA20n1292:228": "prajñādeśanāparivartastṛtīyaḥ",
  "SA20n1292:229": "evaṃ prajñāṃ deśayitvā adhunā saṃvṛtāvupāyo deśyate |",
  "SA20n1292:230": "dānaśīlakṣametyādi |",
  "SA20n1292:231": "sūrye uditamatre chāyotpattivadupāya uktaḥ |",
  "SA20n1292:232": "prathamaṃ dānaṃ mūlamidhīyate |",
  "SA20n1292:233": "uktamanyatra |",
  "SA20n1292:234": "ayaṃ hi sakalo lokaḥ sukhamekamabhīpsati |",
  "SA20n1292:235": "nṝṇāṃ bhogavihīnānāṃ sukhāśā labhyate kutaḥ ||",
  "SA20n1292:236": "dānotsargeṇa hi bhoga utpadyate |",
  "SA20n1292:237": "tena dānaṃ mūlamuktam |",
  "SA20n1292:238": "dānāni catvāri |",
  "SA20n1292:239": "dharmāmiṣābhayamaitrīti |",
  "SA20n1292:240": "rājyasvaśiraḥparyantamavaradharmadānam |",
  "SA20n1292:241": "[tathā hi] dhanaṃ dhānyaṃ suvarṇaṃ rajataṃ maṇiḥ muktā pravālaḥ rathaḥ gajaḥ bhṛtyaḥ dāsaḥ dāsīū priyabhāryā duhitṛsutaḥ pradhānasvaṃ,",
  "SA20n1292:242": "śiraḥ karṇaḥ nāsā pāṇiḥpādaḥ cakṣuḥ svamāṃsaṃ raktaṃ astimajjā medaḥ tvak hṛdayamātmīyaṃ vastu sarvaṃ dadyāt |",
  "SA20n1292:243": "nanvevaṃ sati bodhisattvacaryā nātiduṣkarā ?",
  "SA20n1292:244": "kuśalopāyo hi buddhalābhakaraḥ |",
  "SA20n1292:245": "buddhasukhañca nistulaṃ sukham |",
  "SA20n1292:246": "duḥkhaśataiścaryāpi duḥkhaṃ na syāt |",
  "SA20n1292:247": "tadyathā ekaputravadhasamaye pitra vikriyate |",
  "SA20n1292:248": "cittabhyāsamātre tu nāśakathaṃ kiñcidapi |",
  "SA20n1292:249": "mayūrasya śarīrabhedādahiviṣamamṛtaṃ [bhavati] |",
  "SA20n1292:250": "viṣañca tadabhyāsāt rasāyanaṃ bhavati |",
  "SA20n1292:251": "ānandaviśeṣasukhajanakañca |",
  "SA20n1292:252": "yadabhyastaṃ tadamṛtaṃ bhavati |",
  "SA20n1292:253": "tena duḥkhaṃ cittavikalpaḥ ||",
  "SA20n1292:254": "śīlopāyaḥ | śīlābhidhā ca caryāsti daśākuśalavarjitā |",
  "SA20n1292:255": "prātimokṣasaṃvararakṣaṇam,",
  "SA20n1292:256": "sarvaprāṇyupakāramaitracittavattvam,",
  "SA20n1292:257": "svabhoge alaṃbuddhiḥ,",
  "SA20n1292:258": "abrahmacaryavarjanam,",
  "SA20n1292:259": "satyavacanamevaṃ karomīti,",
  "SA20n1292:260": "apāruṣyavacanam,",
  "SA20n1292:261": "parārādhanam,",
  "SA20n1292:262": "dharmaśo vinayacaryābhāṇakasya sagauravabhāṣaṇam,",
  "SA20n1292:263": "pareṇātmagrahaṇe alobhaḥ,",
  "SA20n1292:264": "kāmacittānāmanutpādanam,",
  "SA20n1292:265": "yātrādya dbhuta [darśana]varjanam,",
  "SA20n1292:266": "ākarṣaṇaśāṭhyavirahaḥ,",
  "SA20n1292:267": "triṣu buddhadharmasaṅgheṣu adhimukticittatvam,",
  "SA20n1292:268": "sarveṣāṃ sattvānāṃ buddhakaraṇe mahotsāhaḥ ||",
  "SA20n1292:269": "dānaśīlādinā ciramarjite'pi puṇye yadi kṣāntirnāsti |",
  "SA20n1292:270": "tadā sadya eva puṇyaṃ naśyet |",
  "SA20n1292:271": "uktañca śāntidevena |",
  "SA20n1292:272": "sarvametatsucaritaṃ dānaṃ sugatapūjanam |",
  "SA20n1292:273": "kṛtaṃ kalpasahasrairyat pratighaḥ pratihanti tat ||",
  "SA20n1292:274": "na ca dveṣasamaṃ pāpaṃ na ca kṣāntisamaṃ tapaḥ |",
  "SA20n1292:275": "tasmātkṣāntiṃ prayatnena bhāvayedvividhairnayaiḥ ||iti |",
  "SA20n1292:276": "tisraḥ kṣāntayaḥ |",
  "SA20n1292:277": "duḥkhādhivāsanākṣāntiḥ parābhavamarṣaṇakṣāntiḥ dharmanidhyānakṣāntiśceti |",
  "SA20n1292:278": "tatra prathamā kasyādhivacanam |",
  "SA20n1292:279": "evaṃ-ahaṃ te anuttaradharma samyaksaṃbuddhalābhaṃ karomi bodhisattvacaryaviśuddhiñca karomi |",
  "SA20n1292:280": "[ityukte kaścidāha]mayoktaṃ śṛṇu |",
  "SA20n1292:281": "no cet jvalanmahāvanhau praviśya prajvala |",
  "SA20n1292:282": "duḥkhamutpannaṃ kāyo vahatu |",
  "SA20n1292:283": "tasyaivamuttaraṃ vadāmi |",
  "SA20n1292:284": "evaṃ satyapi atyantamutsahe |",
  "SA20n1292:285": "ahamanuttaradharma [samyak] saṃbuddha[lābha]āya bodhisattvacaryāśodhanāya ca trisāhasramahāsāhasralokadhātau agnijvālā bhūtvā brahmabhavana[paryantaṃ] svataḥ paripācayāmi |",
  "SA20n1292:286": "kaḥpunarvādastvaduktavanhiḥ ||",
  "SA20n1292:287": "parābhibhavamarṣaṇakṣāntiḥ,",
  "SA20n1292:288": "parīkṣayā [apakāriṣu] apradarśitakopaḥ āyudhena māṃse chinne'pi adhyadhikāṃ kṣāntiṃ janayitvā ahaṃ śata[dhā] hastacchedakamapi śirasi vahāmi taduparyapi maitracittayuktaḥ |",
  "SA20n1292:289": "iti ||",
  "SA20n1292:290": "dharmanidhyānakṣāntiḥ atigambhīre yāne atiśobhane munidharme prathamato labdhe kṣaṇamapi kiñcidasandigdhacittatvam |",
  "SA20n1292:291": "dharmanidhyānakṣāntividhistu parābhibhavamarṣaṇakṣāntivat |",
  "SA20n1292:292": "dharmābhāvaścādharo'tra viśeṣaḥ ||",
  "SA20n1292:293": "vīryaṃ śāntidevenoktam |",
  "SA20n1292:294": "[evaṃ kṣamo bhajedvīryaṃ] vīrye bodhiryataḥ sthitā |",
  "SA20n1292:295": "na hi vīryaṃ vinā puṇyaṃ yathā vāyuṃ vinā gatiḥ ||",
  "SA20n1292:296": "kiṃ vīryaṃ kuśalotsāhaḥ | iti |",
  "SA20n1292:297": "vīryakaraṇārthadarśī kenacit priyeṇa viyuktaḥ vipriyeṇa ca saṅgataḥ vyādhijarāmaraṇaśokādiduḥkha durgatau patitaḥ [api] sadā kuśalakṣaṇakuśaladṛṣṭiḥ aṣṭasvakṣanasthāneṣu mokṣakāle ca bodhicaryāṃ saṃpaśyan kausīdyaṃ vihāya dṛḍhīkṛtya vimatihīnaḥ duḥkhaprahāṇāya vīryamārabheta ||",
  "SA20n1292:298": "dhyānam, prajñopāyāvubhau [ekī]kṛtya cittaikāgrīkaraṇaṃ dhyānam ||",
  "SA20n1292:299": "prajñā yathā pūrvoktā ||",
  "SA20n1292:300": "dānapāramitādikaṃ dātṛpratigrahītṛyatkiñcidanālambaṃ śūnyatayā prekṣeta |",
  "SA20n1292:301": "dānapāramitādi prajñāpāramitayā vyāptam |",
  "SA20n1292:302": "yathā sūryo dvīpān parivartyaṃ nivartate tathā ||",
  "SA20n1292:303": "pāramitāsaṃgrahaḥ |",
  "SA20n1292:304": "svārthatyāgo dānam |",
  "SA20n1292:305": "parānugrahaḥ śīlam |",
  "SA20n1292:306": "gativarjanaṃ kṣamā |",
  "SA20n1292:307": "kuśalotsāho vīryam |",
  "SA20n1292:308": "malānupalepo dhyānam |",
  "SA20n1292:309": "paramārthasatyadeśanāṃ prajñā |",
  "SA20n1292:310": "sattveṣu karuṇāvyāptīkaraṇaṃ prajñārasaḥ |",
  "SA20n1292:311": "buddhasādhakaḥ pitṛmātṛduhitṛbandhu parivārapatnyādirājyabhūmyaiśvaryasaukhyādi [ut] śiṣṭānnavat vihāya mokṣārthaṃ vanaṃ gacchet |",
  "SA20n1292:312": "dānādikantu na duḥkham,",
  "SA20n1292:313": "buddhalābhasukhaviṣamañca ||",
  "SA20n1292:314": "upāyadeśanāparivartaścaturthaḥ",
  "SA20n1292:315": "upāyaprajñayostiṣṭham | iti |",
  "SA20n1292:316": "prajñā yathā pūrvoktā |",
  "SA20n1292:317": "katham, pratītyasamutpādena vastuprajñaptilakṣaṇatā |",
  "SA20n1292:318": "upāyaḥ pūrvoktavaddānādikriyā |",
  "SA20n1292:319": "tāvubhāvekīkṛtya deśako gururnāsti cet,",
  "SA20n1292:320": "svapne'pi [na] utpadyate |",
  "SA20n1292:321": "evaṃ sati upāyaprajñe dve,",
  "SA20n1292:322": "tadbhedādvaye jāte punardānādibhede bahavo dāṣāḥ syuriti cet |",
  "SA20n1292:323": "nāmamātramidaṃ sarvam |",
  "SA20n1292:324": "upāyaprajñānidarśanaṃ saṃvṛtimātramāśritya siddhyati |",
  "SA20n1292:325": "[prajñā]pāramitāyāmapyuktam |",
  "SA20n1292:326": "danapāramitā nāmamātram |",
  "SA20n1292:327": "prajñāpāramitā nāmamātram |",
  "SA20n1292:328": "traidhātukamapi nāmamātram || iti |",
  "SA20n1292:329": "tadubhayaṃ nirākartumāha |",
  "SA20n1292:330": "yato'bhūdyacca nāma tat | ityādi |",
  "SA20n1292:331": "pūrvaṃ parīkṣitavat dharmo nāmamātramucyate |",
  "SA20n1292:332": "na paramārthato bhāvo'sti |",
  "SA20n1292:333": "dharmatā na sa dharmo'stīti | iti |",
  "SA20n1292:334": "nāmamātratayā siddhaḥ,",
  "SA20n1292:335": "vastuśūnyatā |",
  "SA20n1292:336": "pratītyasamutpannaḥ saṃvṛtimātram |",
  "SA20n1292:337": "abhūtaṃ nāma śūnyatā | ityādi |",
  "SA20n1292:338": "saṃvṛtau nāma nimittamātram |",
  "SA20n1292:339": "śabdavida āhuḥ |",
  "SA20n1292:340": "śabdātsarvamutpannamiti |",
  "SA20n1292:341": "sa svayameva saṃvṛtau nāmamātraṃ siddhaḥ |",
  "SA20n1292:342": "vikalpo yastathoditaḥ | ityādi |",
  "SA20n1292:343": "nāmamātram śūnyatā,",
  "SA20n1292:344": "parīkṣā pūrvavatsugamā |",
  "SA20n1292:345": "rūpaṃ taccakṣuṣekṣitam | ityādi |",
  "SA20n1292:346": "cakṣū rūpaṃ paśyatītyādi vyākaraṇaṃ bhagavatā saṃvṛtāvuktam |",
  "SA20n1292:347": "mithyābhimānalokataḥ | ityādi |",
  "SA20n1292:348": "abhimānena sattvaṃ deśakālamātrāṃ vāśritya bhagavatā varākisadṛśamuktam |",
  "SA20n1292:349": "paramārthastvavacanaḥ |",
  "SA20n1292:350": "paramārthaniścayopāyo mṛṣoktaḥ |",
  "SA20n1292:351": "duḥkhasatyaṃ duḥkhasamudayasatyaṃ nirodhasatyaṃ mārgasatyamityādyāryasatyāni catvāri saṃvṛtau deśitāni |",
  "SA20n1292:352": "darśanaṃ yatpratītyajam | ityādi |",
  "SA20n1292:353": "nāyako bhagavato vacanam |",
  "SA20n1292:354": "rūpaśabdādisamāgamakāmānāṃ sattvānāṃ prakāśayati |",
  "SA20n1292:355": "yena yān vividhairupāyaiḥ sattvān vineyān vinayati,",
  "SA20n1292:356": "tān mocayitvā nayati;",
  "SA20n1292:357": "tena bhagavān [nāyakaḥ] |",
  "SA20n1292:358": "upacārāvaniṃ satīm | ityādi |",
  "SA20n1292:359": "saṃvṛtimāśritya prathabhūmyādyucyate |",
  "SA20n1292:360": "paramārthabhūmistu sūkṣmabuddhyaparyantā |",
  "SA20n1292:361": "kalpanāvikalaśūnyatāvediprajñā yasyāsti sa buddhimān |",
  "SA20n1292:362": "sa ca bhagavān |",
  "SA20n1292:363": "na cakṣū rūpamīkṣate | ityādi |",
  "SA20n1292:364": "taimirika iva cakṣuḥ svayaṃ cakṣū rūpañca na paśyati |",
  "SA20n1292:365": "sa cittadharmaśca,",
  "SA20n1292:366": "-cittena citte dṛṣṭamātre cittaṃ na dṛśyate |",
  "SA20n1292:367": "tena na bhavet |",
  "SA20n1292:368": "samādhirājasūtre'pyuktam |",
  "SA20n1292:369": "cakṣuḥśrotraghrāṇajivhākāyamanorūpaśabdagandharasaspraṣṭavyadharmā na santi |",
  "SA20n1292:370": "iti |",
  "SA20n1292:371": "tannigamayannāha |",
  "SA20n1292:372": "sarvaṃ dṛśyaṃ yat | ityādi |",
  "SA20n1292:373": "pūrvoktamupāyaprajñobhayaikīkaraṇajñānādikamanṛtamucyate |",
  "SA20n1292:374": "lokaśca vijahāti yat | iti |",
  "SA20n1292:375": "tadaviparītaṃ tattvam |",
  "SA20n1292:376": "lokaḥ prākṛtaḥ yadajānānaḥ yat-cintāpadmabhūtaṃ manasā acintyamindriyāviṣayabhūtamajñānapaṭalāndhakārapratiruddhamadṛṣṭaṃ-tyajati |",
  "SA20n1292:377": "[sa] paramārthaḥ atitīkṣnendriyaryajñāndṛṣṭigocaraḥ |",
  "SA20n1292:378": "āryaghanavyūhasūtre |",
  "SA20n1292:379": "tattvamatyantamāścaryaṃ gambhīraṃ tadanantavat |",
  "SA20n1292:380": "taddhi durlabhamityasmāllokasya kila buddhinā ||",
  "SA20n1292:381": "jñānaṃ tadgocaraṃ nāsti |",
  "SA20n1292:382": "saṃvṛtiparamārthasatya [deśanā] parivartaḥ pañcamaḥ",
  "SA20n1292:383": "ṣaṭsu jagadgatiṣu bhavasaṅkrāntyupāyo buddhalābhakaropāyaḥ samāptaḥ ||",
  "SA20n1292:384": "paṇḍitamaitreyanāthakṛtaḥ ||"
}