{
  "SA22n1421:0": "[4]",
  "SA22n1421:1": "abhisambodhikramaḥ caturthaḥ",
  "SA22n1421:2": "namaḥ śrīvajrasattvāya",
  "SA22n1421:3": "vajrasattvaṃ namaskṛtya sarvaśūnyopadeśakam |",
  "SA22n1421:4": "caturtho hyābhisambodhikramo'yaṃ vakṣyate mayā ||1 ||",
  "SA22n1421:5": "asau svayambhūrbhagavān eka evādhidaivataḥ |",
  "SA22n1421:6": "upadeśapradānāt tu vajrācāryo'dhikastataḥ ||2 ||",
  "SA22n1421:7": "tatsamārādhanaṃ kṛtvā varṣaṃ māsamathāpi vā |",
  "SA22n1421:8": "tasmai tuṣṭāya gurave pūjāṃ kuryāt tu śaktitaḥ ||3 ||",
  "SA22n1421:9": "yathāsvabhāvato mudrāṃ nivedyāsmai suśikṣitām |",
  "SA22n1421:10": "gaṇamaṇḍalamadhye tu kuryāt pūjāṃ yathāvidhi ||4 ||",
  "SA22n1421:11": "tatastuṣṭo mahāyogī pañcakāmopabhogataḥ |",
  "SA22n1421:12": "ālokasyodayaṃ kuryāt samāpattividhānataḥ ||5 ||",
  "SA22n1421:13": "kalaśādau susaṃsthāpya bodhicittaṃ prayatnataḥ |",
  "SA22n1421:14": "ardharātre cābhisiñcet suśiṣyaṃ kṛpayā guruḥ ||6 ||",
  "SA22n1421:15": "abhiṣekaṃ tu samprāpya pratyūṣamaye punaḥ |",
  "SA22n1421:16": "sampūjyārādhayet stotrairguruṃ śiṣyaṃ kṛtāñjaliḥ ||7 ||",
  "SA22n1421:17": "traidhātukavinirmukta ākāśasamatāṃ gataḥ |",
  "SA22n1421:18": "nopariṣyasi kāmeṣu nirālamba namo'stu te ||8 ||",
  "SA22n1421:19": "aniḥśrito'si skandheṣu dhātuṣvāyataneṣu ca |",
  "SA22n1421:20": "viparyāsavinirmukta nirālamba namo'stu te ||9 ||",
  "SA22n1421:21": "avikalpitasaṅkalpa apratiṣṭhitamānasa |",
  "SA22n1421:22": "acintyamanasikāra nirālamba namo'stu te ||10 ||",
  "SA22n1421:23": "anālayaṃ yathākāśaṃ niṣprapañcaṃ nirañcanam |",
  "SA22n1421:24": "ākāśasamacitto'si nirālamba namo'stu te ||11 ||",
  "SA22n1421:25": "draṣṭukāmo'bhisambodhiṃ sarvaśūnyasvabhāvikām |",
  "SA22n1421:26": "stutvā kṛtāñjaliḥ śiṣyo guraṃ sañcodayet punaḥ ||12 ||",
  "SA22n1421:27": "prayaccha me mahānātha abhisambodhidarśanam |",
  "SA22n1421:28": "karmajanmavinirmuktam ābhāsatrayavarjitam ||13 ||",
  "SA22n1421:29": "prayaccha me mahācārya vajrajñānamanuttaram |",
  "SA22n1421:30": "sarvabuddhamahājñānaṃ sarvatāthāgatālayam ||14 ||",
  "SA22n1421:31": "prayaccha me mahāvajra kāyavākcittaśodhanam |",
  "SA22n1421:32": "anādinidhanaṃ śāntaṃ sarvakleśaviśodhanam ||15 ||",
  "SA22n1421:33": "evamārādhito yogī sadbhūtaguṇakīrtanaiḥ |",
  "SA22n1421:34": "śiṣye kāruṇyamutpādya kramamevamathārabhet ||16 ||",
  "SA22n1421:35": "āloko rātribhāgaḥ sphuṭaravikiraṇaḥ syād divālokabhāsaḥ |",
  "SA22n1421:36": "sandhyālokopalabdhaḥ prakṛtibhirasakṛd yujyate svābhiretat |",
  "SA22n1421:37": "no rātrirnāpi sandhyā na ca bhavati divā yaḥ prakṛtyā vimuktaḥ",
  "SA22n1421:38": "sa syād bodhikṣaṇo'yaṃ varagurukathito yogināmeva gamyaḥ ||17 ||",
  "SA22n1421:39": "naiśaṃ dhvāntaṃ vinaṣṭaṃ vyapagatamakhilaṃ sāndhyatejastu yasmin",
  "SA22n1421:40": "bhāsvānnodeti yāvat kṣaṇa iha vimale darśayed bhūtakoṭim |",
  "SA22n1421:41": "śiṣyāyācāryamukhyo vinihatatimiro bāhyasambodhidṛṣṭyā",
  "SA22n1421:42": "prāpnotyadhyātmasaukhyaṃ vyapagatakaluṣaṃ buddhabodhiṃ kṣaṇena ||18 ||",
  "SA22n1421:43": "anādibhūtaṃ tvathavādibhūtaṃ",
  "SA22n1421:44": "amadhyabhūtaṃ tvatha madhyabhūtam |",
  "SA22n1421:45": "anantabhūtaṃ tvathavāntabhūtaṃ",
  "SA22n1421:46": "tat sarvaśūnyaṃ pravadanti santaḥ ||19 ||",
  "SA22n1421:47": "gamanāgamanaṃ ca yatra nāsti",
  "SA22n1421:48": "kṣayavṛddhī na cāpyabhāvabhāvau |",
  "SA22n1421:49": "ativismayarūpam arūpyavismayaṃ",
  "SA22n1421:50": "sthitimannāpi na cāpi gatvaram ||20 ||",
  "SA22n1421:51": "yadasti-nāstivyavahāramuktaṃ",
  "SA22n1421:52": "na puṇyarūpaṃ na ca pāparūpam |",
  "SA22n1421:53": "na puṇyapāpātmakamagrabhūtaṃ",
  "SA22n1421:54": "tat sarvaśūnyaṃ pravadanti buddhāḥ ||21 ||",
  "SA22n1421:55": "evaṃvidhaṃ tattvamavāpya yogī",
  "SA22n1421:56": "carācarātmā jagadekabandhuḥ |",
  "SA22n1421:57": "yaḥ paryaṭejjñānamayo nṛsiṃhaḥ",
  "SA22n1421:58": "kṛtsnaṃ jagat so'vyayakāyalābhī ||22 ||",
  "SA22n1421:59": "sa jihyakāyo'pyavijihyakāyaḥ",
  "SA22n1421:60": "so'nāsano'pyāsanabandhadhīraḥ |",
  "SA22n1421:61": "samīlitākṣo'pi vibuddhanetraḥ",
  "SA22n1421:62": "samāhitaḥ sanna samāhitau'sau ||23 ||",
  "SA22n1421:63": "sa vāgyuto vāgasamanvito'pi",
  "SA22n1421:64": "bhogānvitaḥ so'pi virupavṛttiḥ |",
  "SA22n1421:65": "sa lokanāthaḥ parabhṛtyabhūto",
  "SA22n1421:66": "yastattvavit kṣīṇasamastadoṣaḥ ||24 ||",
  "SA22n1421:67": "prāptopadeśakaḥ śiṣyo dvidhā yogamathābhyaset |",
  "SA22n1421:68": "piṇḍagrāhakrameṇaiva tathā caivānubhedataḥ ||25 ||",
  "SA22n1421:69": "śirasaḥ pādato cāpi yāvaddhṛdayamāgataḥ |",
  "SA22n1421:70": "bhūtakoṭiṃ viśed yogī piṇḍagrāha iti smṛtaḥ ||26 ||",
  "SA22n1421:71": "sthāvaraṃ jaṅgamaṃ caiva pūrvaṃ kṛtvā prabhāsvaram |",
  "SA22n1421:72": "paścāt kuryāt tathā''tmānam anubhedakramo hyayam ||27 ||",
  "SA22n1421:73": "śvāsavāto yathā''darśe layaṃ gacchati sarvataḥ |",
  "SA22n1421:74": "bhūtakoṭiṃ tathā yogī praviśocca muhurmuhuḥ ||28 ||",
  "SA22n1421:75": "gacchaṃstiṣṭhan svapan bhuñjannunmiṣan nimiṣan hasan |",
  "SA22n1421:76": "anena dhyānayogena sadā tiṣṭhati tattvavit ||29 ||",
  "SA22n1421:77": "sattvārtho'pi kadācit syāt tattatsārūpyaraśminā |",
  "SA22n1421:78": "vāyuvijñānayuktena svādhiṣṭhānakrameṇa tu ||30 ||",
  "SA22n1421:79": "yathā nadījalāt svacchānmīnamuttiṣṭhate drutam |",
  "SA22n1421:80": "sarvaśūnyāt tathā svacchānmāyājālamudīryate ||31 ||",
  "SA22n1421:81": "pañcabuddhakulāyattā mahāmudrādikalpanā |",
  "SA22n1421:82": "pañcaraśmisamucchreyā gagane śakracāpavat ||32 ||",
  "SA22n1421:83": "mudrābandhaṃ prakuryād vā mantraṃ cāpi japed yadi |",
  "SA22n1421:84": "sarvamanyat prakuryācca sarvaśūnyapade sthitaḥ ||33 ||",
  "SA22n1421:85": "sarvabhuk sarvapaścaiva sarvavandī ca sarvagaḥ |",
  "SA22n1421:86": "sarvakṛt sarvaliṅgī ca sarvaśūnyena sidhyati ||34 ||",
  "SA22n1421:87": "prāptopadeśaḥ subhagaḥ suśiṣyo",
  "SA22n1421:88": "baudhau hi cittaṃ paramārthanāma |",
  "SA22n1421:89": "guroḥ sakāśāt punarādadīta",
  "SA22n1421:90": "kṛtāñjalirdhāritapuṣpahastaḥ ||35 ||",
  "SA22n1421:91": "sarvabhāvavigataṃ skandhadhātvāyatanagrāhyagrāhakavarjitaṃ dharmanairātmyasamatayā svacittam ādyanutpannaṃ śūnyatāsvabhāvamiti |",
  "SA22n1421:92": "tatastu gurave dadyād dakṣiṇāṃ tvanurūpataḥ |",
  "SA22n1421:93": "ratnaṃ gṛhaṃ vā hastyaśvaṃ grāmaṃ vā śayanāsanam ||36 ||",
  "SA22n1421:94": "dāsaṃ dāsīṃ priyāṃ bhāryāṃ putrīṃ cāpyativarṇabhām |",
  "SA22n1421:95": "ātmānaṃ cāpi yaddadyāt kimanyadavaśiṣyate ||37 ||",
  "SA22n1421:96": "prāptācāryaprasādo vimaladṛḍhamatiḥ sarvabhāvasvabhāvaḥ",
  "SA22n1421:97": "svacchaṃ śuddhaṃ susūkṣmaṃ paramaśivamayaṃ buddhanirvāṇadhātum |",
  "SA22n1421:98": "nirdvandvaṃ nirvikalpaṃ satatasukhamayaṃ bhāvayet tattvayogī",
  "SA22n1421:99": "puṇyāpuṇyād vimuktaḥ svayamiha bhagavān jāyate vajrasattvaḥ ||38 ||",
  "SA22n1421:100": " |paramarahasyasukhābhisambodhikramaścaturthaḥ samāptaḥ ||",
  "SA22n1421:101": "kṛtiriyam ācāryanāgārjunapādānām |",
  "SA22n1421:102": "granthapramāṇamasya ślokāścatvāriṃśat |"
}