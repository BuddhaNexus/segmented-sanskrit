{
  "S05n2916:3": "Svastyayanagāthā",
  "S05n2916:13": "namo'stu buddhāya namo'stu bodhaeye",
  "S05n2916:17": "namo vimuktāya namo vimuktaye |",
  "S05n2916:21": "namo'stu jñānasya namo'stu jñānino",
  "S05n2916:25": "lokāgraśreṣṭhāya namo karotha ||1 ||",
  "S05n2916:29": "yānīha bhūtāni samāgatāni",
  "S05n2916:33": "bhūmyāni vā yāni va antarīkṣe |",
  "S05n2916:37": "sarvāṇi vā āttamanāni bhūtvā",
  "S05n2916:41": "śṛṇvantu svastyayanaṁ jinena bhāṣitaṁ ||2 ||",
  "S05n2916:45": "imasmiṁ vā loke parasmiṁ vā punaḥ",
  "S05n2916:49": "svargeṣu vā yaṁ ratanaṁ praṇītaṁ |",
  "S05n2916:53": "na taṁ samaṁ asti tathāgatena",
  "S05n2916:57": "devātidevena narottamena |",
  "S05n2916:61": "imaṁ pi buddhe ratanaṁ praṇītaṁ",
  "S05n2916:65": "etena satyena susvasti bhotu",
  "S05n2916:69": "manuṣyato vā amanuṣyato vā ||3 ||",
  "S05n2916:73": "[ kṣayaṁ virāgaṁ amṛtaṁ praṇītaṁ",
  "S05n2916:77": "yadadhyagāt śākyamuniḥ samāhitaḥ |",
  "S05n2916:81": "na tena dharmeṇa samamasti kiñcit | ]",
  "S05n2916:85": "idaṁ pi dharme ratanaṁ praṇītaṁ |",
  "S05n2916:89": "etena satyena susvasti bhotu",
  "S05n2916:93": "manuṣyato vā amanuṣyato vā ||4 ||",
  "S05n2916:97": "yaṁ buddheśreṣṭho parivarṇaye śuciṁ",
  "S05n2916:101": "yamāhu ānantariyaṁ samādhiṁ",
  "S05n2916:105": "samādhino tasya samo na vidyate |",
  "S05n2916:109": "idaṁ pi dharme ratanaṁ praṇītaṁ",
  "S05n2916:113": "etena satyena susvasti bhotu",
  "S05n2916:117": "manuṣyato vā amanuṣyato vā ||5 ||",
  "S05n2916:121": "ya pudgalā aṣṭa sadā praśastā",
  "S05n2916:125": "catvāri etāni yugani bhonti |",
  "S05n2916:129": "te dakṣiṇīyā sugatena uktāḥ",
  "S05n2916:133": "etāni dinnāni mahatphalāni |",
  "S05n2916:137": "idaṁ pi saṁghe ratanaṁ praṇītaṁ",
  "S05n2916:141": "etena satyena susvasti bhotu",
  "S05n2916:145": "manuṣyato vā amanuṣyato vā ||6 ||",
  "S05n2916:149": "sarvaiva yasya darśanasaṁpadāyo",
  "S05n2916:153": "trayo'sya dharmā jahitā bhavanti |",
  "S05n2916:157": "satkāyadṛṣṭī vicikitsitaṁ ca",
  "S05n2916:161": "śīlavrataṁ cāpi yadasti kiṁcit |",
  "S05n2916:165": "idaṁ pi saṁghe ratanaṁ praṇītaṁ",
  "S05n2916:169": "etena satyena susvasti bhotu",
  "S05n2916:173": "manuṣyato vā amanuṣyato vā ||7 ||",
  "S05n2916:177": "kiṁcāpi śaikṣo prakaroti pāpaṁ",
  "S05n2916:181": "kāyena vācā atha cetasāpi |",
  "S05n2916:185": "abhavyo so tasya nigūhanāya",
  "S05n2916:189": "abhavyatā dṛṣṭapatheṣu uktā |",
  "S05n2916:193": "idaṁ pi saṁghe ratanaṁ praṇītaṁ",
  "S05n2916:197": "etena satyena susvasti bhotu",
  "S05n2916:201": "manuṣyato vā amanuṣyato vā ||8 ||",
  "S05n2916:205": "yathendrakīlo pṛthivīsanniśrito syā",
  "S05n2916:209": "catūrbhi vātehi asaṁprakampi |",
  "S05n2916:213": "tathopamaṁ satpuruṣaṁ vademi",
  "S05n2916:217": "yo āryasatyāni sudeśitāni",
  "S05n2916:221": "gambhīrārthāni athetya paśyati |",
  "S05n2916:225": "idaṁ pi saṁdhe ratanaṁ praṇītaṁ",
  "S05n2916:229": "etena satyena susvasti bhotu",
  "S05n2916:233": "manuṣyato vā amanuṣyato vā ||9 ||",
  "S05n2916:237": "ye āryasatyāni vibhāvayanti",
  "S05n2916:241": "gambhīraprajñena sudeśitāni |",
  "S05n2916:245": "kiṁcāpi te bhonti bhṛśaṁ pramattā",
  "S05n2916:249": "na te bhavāṁ aṣṭa upādiyanti |",
  "S05n2916:253": "idaṁ pi saṁghe ratanaṁ praṇītaṁ",
  "S05n2916:257": "etena satyena susvasti bhotu",
  "S05n2916:261": "manuṣyato vā amanuṣyato vā ||10 ||",
  "S05n2916:265": "ye yuktayogī manasā succhandasā",
  "S05n2916:269": "naiṣkramyiṇo gautamaśāsanasmiṁ |",
  "S05n2916:273": "te prāptiprāptā amṛtaṁ bigāhya",
  "S05n2916:277": "vimuktacittā nirvṛtiṁ bhuṁjamānā |",
  "S05n2916:281": "idaṁ pi saṁghe ratanaṁ praṇītaṁ",
  "S05n2916:285": "etena satyena susvasti bhotu",
  "S05n2916:289": "manuṣyato vā amanuṣyato vā ||11 ||",
  "S05n2916:293": "kṣīṇaṁ purāṇaṁ navo nāsti saṁcayo",
  "S05n2916:297": "vimuktā āyatike bhavasmiṁ",
  "S05n2916:301": "te kṣīṇabījā avirūḍhidharmā",
  "S05n2916:305": "nirvānti dhīrā yatha tailadīpā |",
  "S05n2916:309": "idaṁ pi saṁghe ratanaṁ praṇītaṁ",
  "S05n2916:313": "etena satyena susvasti bhotu",
  "S05n2916:317": "manuṣyo vā amanuṣyato vā ||12 ||",
  "S05n2916:321": "agniryathā prajvalito niṣīde",
  "S05n2916:325": "indhanakṣayā śāmyati vegajāto |",
  "S05n2916:329": "evaṁvidhaṁ dhyāyino buddhaputrāḥ",
  "S05n2916:333": "prajñāya rāgānuśayaṁ grahetvā",
  "S05n2916:337": "adarśanaṁ mṛtyurājasya yānti |",
  "S05n2916:341": "idaṁ pi saṁghe ratanaṁ praṇītaṁ",
  "S05n2916:345": "manuṣyato vā amanuṣyato vā ||13 ||",
  "S05n2916:349": "grīṣmāṇamāse prathame caitrasmiṁ",
  "S05n2916:353": "vane pragulmā yatha puṣpitāgrā",
  "S05n2916:357": "vāteritā te surabhiṁ pravānti |",
  "S05n2916:361": "evaṁvidhaṁ dhyāyino buddhaputrāḥ",
  "S05n2916:365": "śīlenupetā surabhiṁ pravānti |",
  "S05n2916:369": "idaṁ pi saṁghe ratanaṁ praṇītaṁ",
  "S05n2916:373": "etena satyena susvasti bhotu",
  "S05n2916:377": "manuṣyato vā amanuṣyato vā ||14 ||",
  "S05n2916:381": "yānīha bhūtāni samāgatāni",
  "S05n2916:385": "bhūmyāni vā yāni va antarīkṣe |",
  "S05n2916:389": "maitrīkarontu sada manuṣyakā prajā",
  "S05n2916:393": "divaṁ ca rātriṁ ca haranti vo baliṁ |",
  "S05n2916:397": "tasmāddhi taṁ rakṣatha apramattā",
  "S05n2916:401": "mātā va putraṁ anukampamānā |",
  "S05n2916:405": "etena satyena susvasti bhotu",
  "S05n2916:409": "manuṣyato vā amanuṣyato vā ||15 ||",
  "S05n2916:413": "vipaśyismiṁ viśvabhuvi krakucchande",
  "S05n2916:417": "bhāmakanakamunismiṁ kāśyate",
  "S05n2916:421": "mahāvaśe śākyamunismiṁ gautame |",
  "S05n2916:425": "etehi buddhehi mahāddhiṁkehi",
  "S05n2916:429": "yā devatā santi abhiprasannā |",
  "S05n2916:433": "vāḍhaṁ pi taṁ rakṣayantu ca karontu",
  "S05n2916:437": "svastyayanaṁ mānuṣikaprajāye |",
  "S05n2916:441": "tasmā hi taṁ rakṣatha apramattā",
  "S05n2916:445": "mātā va putraṁ anukampamāna |",
  "S05n2916:449": "[ etaṁ pi saṁghe ratanaṁ praṇītaṁ ]",
  "S05n2916:453": "etena satyena susvasti bhotu",
  "S05n2916:457": "manuṣyato vā amanuṣyato vā ||16 ||",
  "S05n2916:461": "yo dharmacakraṁ abhibhūya lokaṁ",
  "S05n2916:465": "pravartayati sarvabhūtamukampitaṁ |",
  "S05n2916:469": "etādṛśaṁ devamanuṣyaśreṣṭhaṁ",
  "S05n2916:473": "buddhaṁ namasyāmi susvasti bhotu |",
  "S05n2916:477": "dharmaṁ namasyāmi susvasti bhotu",
  "S05n2916:481": "saṁghaṁ namasyāmi susvasti bhotu",
  "S05n2916:485": "manuṣyato vā amanuṣyato va ||17 ||",
  "S05n2916:492": "[ iti svastyayanagāthā ]"
}