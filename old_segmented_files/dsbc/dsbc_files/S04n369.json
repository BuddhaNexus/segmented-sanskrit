{
  "S04n369:0": "6. durdānta dānava prabodhana bodhicaryāvatāraṇa prakaraṇam",
  "S04n369:1": "atha sarvanīvaraṇaviṣkambhī sa jinātmajaḥ |",
  "S04n369:2": "bhagavantaṃ munīndraṃ taṃ punarnatvaivamabravīt ||",
  "S04n369:3": "durklabhaṃ bhagavanstasya lokeśvarasya darśanam |",
  "S04n369:4": "saddharmaśravaṇaṃ cāpi sadā traidhātukeṣvapī ||",
  "S04n369:5": "kadāsau trijagannātho lokeśvara ihāvrajet |",
  "S04n369:6": "draṣṭumicchāmyahaṃ śāstastaṃ sarvādhipatiṃ prabhum ||",
  "S04n369:7": "iti tenoditaṃ śrutvā bhagavān sa munīśvaraḥ |",
  "S04n369:8": "viṣkambhinaṃ mahāsattvaṃ tamālokyaivamādiśat ||",
  "S04n369:9": "bhūyastasya jagadbhartuḥ lokeśsya mahātmanaḥ |",
  "S04n369:10": "saddharmaguṇamāhātmyaṃ vakṣye tacchraṇutādarāt ||",
  "S04n369:11": "asmin dvīpe'sti kāṃcanyamayī bhūmirmanoramā |",
  "S04n369:12": "tatrānekasahasrāṇi vasanti smāmaradviṣām ||",
  "S04n369:13": "tatrāsau trijagannātho lokeśvaro vilokayan |",
  "S04n369:14": "durdantān danujān duṣṭān samuddhartumupācarat ||",
  "S04n369:15": "dadarśa tān mahāduṣṭān daśākuśale saṃcaratān |",
  "S04n369:16": "madamānātirdarpāndhān kleśāgnitāpitāśayān ||",
  "S04n369:17": "saṃpaśyan karuṇātmā sa maitrīkāruṇyacoditaḥ |",
  "S04n369:18": "puṇyaraśmiṃ samutsṛjya prabhāsayannupācarat ||",
  "S04n369:19": "tadraśmiparisaṃspṛṣṭāḥ sarve te sukhatānvitāḥ |",
  "S04n369:20": "atyadbhutasamāghrātacittā evaṃ vyacintayan ||",
  "S04n369:21": "aho kuta iyaṃ kāntiḥ prāyāteha prasāritā |",
  "S04n369:22": "yayā spṛṣṭā vayaṃ sarve mahatsaukhyasamanvitāḥ || 67",
  "S04n369:24": "iti cintayatāṃ teṣāṃ sa lokeśśo jinātmajaḥ |",
  "S04n369:25": "pura ācāryarupeṇa saṃpaśyan samupācaran ||",
  "S04n369:26": "tamevaṃ samupāyātaṃ dṛṣṭvā sarve'pi te'surāḥ |",
  "S04n369:27": "suprasannāḥ samāgamya praṇatvaivaṃ babhāṣire ||",
  "S04n369:28": "svāgataṃ te śivaṃ kaścidvijayasvātra sadguro |",
  "S04n369:29": "praviśehāsane śāstaryatkāryaṃ tatsamādiśa ||",
  "S04n369:30": "iti taiḥ prārthitaṃ śrutvā samāśritya sa āsane |",
  "S04n369:31": "sarvāṃstān samupāsīnān samālokyaivamabravīt ||",
  "S04n369:32": "kasyeyaṃ kāntirāyātā yatpṛṣṭe no mahatsukham |",
  "S04n369:33": "manyadhvaṃ kiṃ bhavadbhistadbhutamiha jāyate ||",
  "S04n369:34": "iti tenoditaṃ śrutvā sarve te dānavā api |",
  "S04n369:35": "śāstāraṃ taṃ samālokya pratyūcurevamādarāt ||",
  "S04n369:36": "na jānīmo vayaṃ śāstaḥ kasyeyaṃ kāntirāgatā |",
  "S04n369:37": "tadbhavānnaḥ samādiśya prabodhayitumarhati ||",
  "S04n369:38": "iti taiḥ prārthitaṃ śrutvā sa ācāryo vilokya tān |",
  "S04n369:39": "sarvāṃstadadbhutaṃ praṣṭukāmānevamabhāṣata ||",
  "S04n369:40": "śṛṇvantu tadahaṃ vakṣye yadiyaṃ kāntirāgatā |",
  "S04n369:41": "śrutvā mayā yathākhyātaṃ tathā caritumarhatha ||",
  "S04n369:42": "iti tena samādiṣṭaṃ śrutvā sarve'pi te'surāḥ |",
  "S04n369:43": "suprasannāśayā natvā taṃ gurumevamabruvan ||",
  "S04n369:44": "śāstarbhavān yadamākamācāryo dharmadeśakaḥ |",
  "S04n369:45": "tadetadadbhutaṃ jātaṃ samupādeṣṭumarhati ||",
  "S04n369:46": "iti taiḥ prārthyamānaḥ sa ācāryastān prasāditān |",
  "S04n369:47": "sarvān vismayasaṃpannān samālokyaivamādiśat ||",
  "S04n369:48": "śṛṇudhvamādadyūyaṃ sarvaṃ tatra mamoditam |",
  "S04n369:49": "tadevamadbhutaṃ jātaṃ bodhayituṃ pravakṣyate ||",
  "S04n369:50": "tadyathā yo jagannāthaḥ sarvatraidhātukādhipaḥ |",
  "S04n369:51": "jagacchāstā jagadbhartā bodhisattvo jinātmajaḥ || 68",
  "S04n369:53": "mahāsattvo mahābhijña āryāvalokiteśvaraḥ |",
  "S04n369:54": "maitrīkṣamāprasannātmā karuṇāmaya īśvaraḥ ||",
  "S04n369:55": "sa trailokeśvaraḥ śrīmān saddharmapuṇyabhāskaraḥ |",
  "S04n369:56": "sarvān sattvān samuddhartuṃ carate tribhaveṣvapi ||",
  "S04n369:57": "sarvatra sa samālokya sarvān sattvān prabodhayan |",
  "S04n369:58": "bodhimārge pratiṣṭhāpya preṣayati sukhāvatīm ||",
  "S04n369:59": "sa evaṃ sarvalokeṣu sarveṣu nārakeṣvapi |",
  "S04n369:60": "nimagnān pāpino duṣṭānapi sattvān vilokayan ||",
  "S04n369:61": "puṇyasudhākaraiḥ spṛṣṭvā samuddhṛtya prabodhayan ||",
  "S04n369:62": "bodhimārge pratiṣṭhāpya preṣayati sukhāvatīm ||",
  "S04n369:63": "dine dine sa ālokya samuddhṛya prabodhayan |",
  "S04n369:64": "apremeyānasaṃkhyeyān sattvān preṣayati sadgatau ||",
  "S04n369:65": "evaṃ kṛtvā sa lokeśoo mahatpuṇyaiḥ samanvitaḥ |",
  "S04n369:66": "sarvadharmādhipaḥ śāstā dharmarājo jagatprabhuḥ ||",
  "S04n369:67": "bodhisattvo mahāsatvaḥ sarvasattvahitārthabhṛt |",
  "S04n369:68": "sarvavidyādhipo dhīraḥ saṃbodhijñānabhāskaraḥ ||",
  "S04n369:69": "ihāpi sa samāgatya sarvān sattvān prabodhayan |",
  "S04n369:70": "bodhimārge pratiṣṭhāpya saṃpreṣayet sukhāvatīm ||",
  "S04n369:71": "ityevaṃ sa ihāgantuṃ puṇyaraśmi samutsṛjan |",
  "S04n369:72": "prabhāsayan jagallokaṃ saṃcaratve jinālayān ||",
  "S04n369:73": "tasya puṇyaprabhākāntirihāpīyaṃ prasāritā |",
  "S04n369:74": "tayā yūyaṃ parispṛṣṭā mahatsukhasamanvitāḥ ||",
  "S04n369:75": "tattasya śaraṇaṃ kṛtvā dhyātvā smṛvāpi sarvadā |",
  "S04n369:76": "nāmāpi ca samuccārya natvā bhajitumarhatha ||",
  "S04n369:77": "ye tasya śaraṇaṃ kṛtvā dhyātvā smṛtvā samādarāt |",
  "S04n369:78": "śraddhayā nāma proccārya stutvā natvā bhajantyapi ||",
  "S04n369:79": "sarve'pi te na jāyante durgatīṣu kadācana |",
  "S04n369:80": "sadā sadgatisaṃjātāścaranti sarvadā śubhe || 69",
  "S04n369:82": "viratamārasaṃcārāḥ saddharmaguṇalālasāḥ |",
  "S04n369:83": "sarvasattvahitādhānasaṃbodhivratakāminaḥ ||",
  "S04n369:84": "triratnabhajanotsāhāścaturbrahmavihāriṇaḥ |",
  "S04n369:85": "bhadraśrīguṇasaṃpattisamuddhāḥ sadguṇāratāḥ ||",
  "S04n369:86": "yāvajjīvaṃ sukhaṃ bhuktvā svaparātmahitodyatāḥ |",
  "S04n369:87": "bodhicaryāvrataṃ dhṛtvā saṃcareran jagacchubhe ||",
  "S04n369:88": "tato'ntaḥsamaye teṣāṃ lokeśvaraḥ sa saṃmukham ||",
  "S04n369:89": "upāgatya samāśvāsaṃ dadyādevaṃ vadatpuraḥ ||",
  "S04n369:90": "mā bhaiṣīḥ kulaputrātra kiṃcinnā te bhayaṃ kvacit ||",
  "S04n369:91": "triratnabhajanaṃ kṛtvā saddharmaṃ yat tvayārjitam |",
  "S04n369:92": "na tvaṃ yāyāḥ punaḥ kvāpi durgatiṣu kadācana |",
  "S04n369:93": "sadā sadgutisaṃjātāḥ saddharmaśrīsukhānvitaḥ |",
  "S04n369:94": "triratnabhajanaṃ kṛtvā saṃcarethāḥ susaṃvare ||",
  "S04n369:95": "tathā yāvadbhuvaṃ loke bodhicaryāvrataṃ caran |",
  "S04n369:96": "kṛtvā sattvahitaṃ saukhyaṃ bhuktvā prānte vrajeddivi ||",
  "S04n369:97": "tatrāpi tvaṃ mahāsaukhyaṃ bhuktvā caretsadā śubhe ||",
  "S04n369:98": "evaṃ matvā samādhāya smṛtvā ratnatrayaṃ sadā |",
  "S04n369:99": "tiṣṭhāmo'tra viṣīda tvaṃ mṛto'pi satsukhaṃ labheḥ ||",
  "S04n369:100": "sarveṣāmapi jantūnāṃ sasāre maraṇaṃ dhruvam |",
  "S04n369:101": "tvaṃ sukhenaiva muktvemaṃ kāyaṃ divyamavāpsyasi ||",
  "S04n369:102": "yāvajjīvaṃ yathākāmaṃ bhuktvā svarge'maraiḥ saha |",
  "S04n369:103": "tataścāpi sukhenaiva yāyādante sukhāvatīm ||",
  "S04n369:104": "tatra gatvāmitābhasya triśāstuḥ samupāśritaḥ |",
  "S04n369:105": "sadā dharmāmṛtaṃ pītvā saṃcarethāḥ susaṃvare ||",
  "S04n369:106": "tatraivaṃ suciraṃ bhuktvā saddharmaśrīsukhotsavam |",
  "S04n369:107": "prānte bodhiṃ samāsādya samāpnuyāḥ sunirvṛtim ||",
  "S04n369:108": "ityante samaye teṣāṃ lokanāthaḥ sa saṃmukham |",
  "S04n369:109": "samāgatya samāśvāsaṃ datvābhayaṃ samarpayet || 70",
  "S04n369:111": "iti satyaṃ samākhyātaṃ sarvairapi munīśvaraiḥ |",
  "S04n369:112": "śrutaṃ mayā tathākhyātaṃ śruvānumodya caryatām ||",
  "S04n369:113": "evaṃ matvāsya trailokanāthasya śaraṇaṃ gatāḥ |",
  "S04n369:114": "smṛtvā nāma samuccārya dhyātvā bhajata sarvadā ||",
  "S04n369:115": "tathā vaḥ sarvadā bhadraṃ nirutpātaṃ bhaved dhruvam |",
  "S04n369:116": "yāvajjīvaṃ sukhaṃ bhuktvā yāyāntānte surālayam ||",
  "S04n369:117": "tatrāpi suciraṃ bhuktvā divyakāmaṃ sukhotsavam |",
  "S04n369:118": "tato'ntasamaye cyutvā saṃyāsyatha sukhāvatīm ||",
  "S04n369:119": "tatra gatvāmitābhasya sarvadā samupasthitāḥ |",
  "S04n369:120": "pītvā dharmāmṛtaṃ puṇyaṃ mahotsāhaiścariṣyatha ||",
  "S04n369:121": "tatrāpi suciraṃ bhuktvā saddharmaśrīmahotsavam |",
  "S04n369:122": "prānte saṃbodhimāsādya samavāpsyatha nirvṛtim |",
  "S04n369:123": "iti tena samādiṣṭaṃ śrutvā sarvai'pi te'surāḥ |",
  "S04n369:124": "tatheti prativijñāpya prabodhitāścaivamabruvan ||",
  "S04n369:125": "śāstastathā kariṣyāmaḥ yathādiṣṭaṃ tvayādhunā |",
  "S04n369:126": "adyārabhya sadā tasya nāthasya śaraṇaṃ gatāḥ ||",
  "S04n369:127": "smṛtvā dhyātvā samuccārya nāmāpi prabhajāmahe |",
  "S04n369:128": "tadasmākaṃ hitārthena bhavāṃstasya jagatprabhoḥ ||",
  "S04n369:129": "vratasyāpi vidhānaṃ ca samupādeṣṭumarhati |",
  "S04n369:130": "iti taiḥ prārthitaṃ śrutvā sa ācāryo'prabodhitān |",
  "S04n369:131": "sarvāṃstān dānavān dṛṣṭvā punarevamupādiśat |",
  "S04n369:132": "śṛṇudhvamasya vakṣyāmi vratavidhiṃ samāsataḥ ||",
  "S04n369:133": "ādau tīrthe jale snātvā śuddhaśīlā jinendriyāḥ |",
  "S04n369:134": "brahmavihāriṇo bhūtvā caritvā poṣadhaṃ vratam |",
  "S04n369:135": "triratnaśaraṇaṃ gatvā dhyātvā taṃ sugatātmajam |",
  "S04n369:136": "lokeśvaraṃ samāvāhya samabhyarcya yathāvidhi |",
  "S04n369:137": "jagastotrādibhiḥ stutvā kṛtvā cāpi pradakṣiṇām |",
  "S04n369:138": "jagastotrādibhiḥ stutvā kṛtvā cāpi pradakṣiṇām |",
  "S04n369:139": "aṣṭāṃgai praṇatiṃ kṛvā smṛtvā cāpi samādarāt || 71",
  "S04n369:141": "nāmāni ca samuccārya dṛṣṭvā śrutvāpi tadguṇān |",
  "S04n369:142": "praśaṃsāmapi bhāṣitvā prakāśitvā ca sarvataḥ ||",
  "S04n369:143": "satkṛtya śraddhayā sarvairupakaṇavastubhiḥ |",
  "S04n369:144": "yathāśakti samabhyarcya vanditvā bhajatābhavam |",
  "S04n369:145": "evaṃ nityaṃ samādhāya catussaṃdhyaṃ dine dine |",
  "S04n369:146": "yathāśakti bhajadhvaṃ taṃ dhyātvā smṛtvāpi bhāvataḥ ||",
  "S04n369:147": "pratyahamekavāraṃ vā māse māse'pi vā site |",
  "S04n369:148": "aṣṭamyāṃ pūrṇamāsyāṃ vā bhajadhvaṃ sarvadā tathā ||",
  "S04n369:149": "evaṃ vidhāya sarve'pi yūyametad guṇānvitāḥ |",
  "S04n369:150": "yathoktaṃ tatfalaṃ prāpya nūnaṃ yāsyatha nirvṛtim ||",
  "S04n369:151": "iti tena samādiṣṭaṃ śrutvā sarve'pi te'surāḥ |",
  "S04n369:152": "prabodhitāḥ pramodantastathā caritumicchire ||",
  "S04n369:153": "tataste dānavāssarve durdāntā madamāninaḥ |",
  "S04n369:154": "apyetatpuṇyasatsaukhyaprakāmamuditāśayāḥ ||",
  "S04n369:155": "śuddhaśīlāḥ prasannāśca saddharmaguṇalālasāḥ |",
  "S04n369:156": "viratopāyasaṃcārāścaturbrahmvihāriṇaḥ ||",
  "S04n369:157": "tena śāstrā yathādiṣṭaṃ tathādhāya samādarāt |",
  "S04n369:158": "tasya trailokanāthasya prakṛtvā śaraṇaṃ mudā ||",
  "S04n369:159": "dhyātvā smṛtvā sadā nāma samuccārya yathāvidhi |",
  "S04n369:160": "poṣadhaṃ ca vrataṃ dhṛtvā prācaranta samāhitāḥ ||",
  "S04n369:161": "yathāśakti samabhyarcya sarvopakaṇairapi |",
  "S04n369:162": "kṛtvā pradakṣiṇānyeva kṛtvā ca praṇatiṃ muhuḥ |",
  "S04n369:163": "aṣṭāṃgaiścāpi vanditvā prabhajantaḥ samācaran ||",
  "S04n369:164": "evaṃ te dānavāḥ sarve śāntacaryā jitendriyāḥ |",
  "S04n369:165": "śuddhaśīlāḥ śubhācārāścatarbravihāriṇaḥ ||",
  "S04n369:166": "parasparaṃ hitaṃ kṛtvā saddharmaguṇabhāṣiṇaḥ |",
  "S04n369:167": "bodhicaryāvratāraktā babhūvurbodhibhāginaḥ ||",
  "S04n369:168": "evaṃ tān dānavān sarvānācāryaḥ sa prabodhayan |",
  "S04n369:169": "bodhimārge pratiṣṭhāpya samāmantrya tato'carat || 72",
  "S04n369:171": "tataḥ so'ntarhitaḥ khe sthaḥ prabhāsayan samantataḥ |",
  "S04n369:172": "dhṛtvā lokeśvaro mūrtiṃ sarvāṃstān samadarśayat ||",
  "S04n369:173": "tamākāśe prabhāsantaṃ lokeśvaraṃ jinātmajam |",
  "S04n369:174": "dṛṣṭvā te dānavāssarve babhūvurvismayānvitāḥ ||",
  "S04n369:175": "tatra te praṇatiṃ kṛtvā gatvā taṃ śaraṇaṃ mudā |",
  "S04n369:176": "japastotrādibhiḥ stutvā vanditvā prāvadaṃstathā ||",
  "S04n369:177": "namaste bhagavannātha sadā te śaraṇaṃ sthitāḥ |",
  "S04n369:178": "bodhicaryāvrataṃ dhṛtvā carāma tatprasīdatu ||",
  "S04n369:179": "yadasmadaparādhaṃ tat kṣantavyaṃ bhavatā sadā |",
  "S04n369:180": "evamasmān samālokya saṃpālayitumarhati ||",
  "S04n369:181": "ityevaṃ te'surāḥ sarve prārthayitvā samādarāt |",
  "S04n369:182": "aṣṭāṃgairapi taṃ natvā paśyanta eva tasthire ||",
  "S04n369:183": "tataḥ sa trijagannātho datvā tebhyo jayāśiṣam |",
  "S04n369:184": "tataścāntarhito'yatra sattvānuddhartumācarat ||",
  "S04n369:185": "tataste dānavāḥ sarve bhūyo'tidharmalālasāḥ |",
  "S04n369:186": "triratnabhajanaṃ kṛtvā saṃpraceruḥ sadā śubhe ||",
  "S04n369:187": "evaṃ sa trijagannātho nānārupeṇa bodhayan |",
  "S04n369:188": "durdāntānapi saddharme niyojayati yatnataḥ ||",
  "S04n369:189": "tenāsya trijagadbhartuḥ puṇyaskandhaṃ mahattaram |",
  "S04n369:190": "aprameyamasaṃkhyeyamityākhyātaṃ munīśvaraiḥ ||",
  "S04n369:191": "ityasau trijagacchāstā sarvalokādhipeśvaraḥ |",
  "S04n369:192": "sarvajñaiḥ sugataiḥ sarvaiḥ praśaṃsitaḥ sadādarāt ||",
  "S04n369:193": "iti tasya jagallokaiḥ puṇyamāhātmyasatkathām |",
  "S04n369:194": "śrutvānumodanāṃ kṛtvā praśaṃsya te samantataḥ ||",
  "S04n369:195": "iti matvā sadā tasya lokeśasya jagatprabhoḥ |",
  "S04n369:196": "śraddhayā śaraṇe sthitvā bhaktavyaṃ saḥ sukhārthibhiḥ ||",
  "S04n369:197": "ityevaṃ śikhinākhyātaṃ saṃbuddhena mayā śrutam |",
  "S04n369:198": "tathātra vaḥ samākhyātaṃ śrutvānupratibudhyatām ||",
  "S04n369:199": "evaṃ matvāsya māhātmyaṃ saddharmaguṇavāṃchibhiḥ |",
  "S04n369:200": "kartuvyāḥ sarvadā bhaktyā dhyātvā smṛtvāpi bhāvataḥ ||",
  "S04n369:201": "ye tasya śaraṇe sthitvā dhyātvā smṛtvāpi bhāvataḥ |",
  "S04n369:202": "nāmāpi ca samuccārya bhajanti sarvadā mudā |",
  "S04n369:203": "te sarve vimalātmānaḥ saṃbuddhaśrīguṇākarāḥ ||",
  "S04n369:204": "bodhisattvā mahāsatvā bhaviṣyanti jinātmajāḥ |",
  "S04n369:205": "iti śāstrā munīndreṇa samādiṣṭaṃ niśamya te ||",
  "S04n369:206": "viṣkambhipramukhāḥ sarve prābhyanandan prabodhitāḥ ||",
  "S04n369:207": " ||iti durdāntadānavaprabodhana bodhicaryāvatāraṇaprakaraṇam ||"
}