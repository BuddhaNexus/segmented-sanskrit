{
  "SA05n898:0": "vajrapāṇināmāṣṭottaraśatastotram",
  "SA05n898:1": "vajrasattva mahāsattva mahāyāna mahātmaka |",
  "SA05n898:2": "mahāprabha mahāśuddha mahānātha namo'stu te || 1 ||",
  "SA05n898:3": "vajrarāja mahāvajra vajra sarvatathāgata |",
  "SA05n898:4": "mahāsattva mahāvīrya mahopāya namo'stu te || 2 ||",
  "SA05n898:5": "vajrarāga mahāśuddha sarvasaukhya mahāsukha |",
  "SA05n898:6": "sukhāgryānādinidhana mahākāma namo'stu te || 3 ||",
  "SA05n898:7": "vajrasādhu mahātuṣṭi sādhukāra praharṣaka |",
  "SA05n898:8": "mahāharṣa mahāmoda suprāmodya namo'stu te || 4 ||",
  "SA05n898:9": "vajraratna mahārāja svābhiṣeka mahāmate |",
  "SA05n898:10": "sarvaratna mahāśobhavibhūṣaṇa namo'stu te || 5 ||",
  "SA05n898:11": "vajrateja mahāteja vajraprabha mahādyute |",
  "SA05n898:12": "jinaprabha mahājvāla buddhaprabha namo'stu te || 6 ||",
  "SA05n898:13": "vajraketu mahāketu mahādhvaja dhanaprada |",
  "SA05n898:14": "ākāśaketo mahāyaṣṭi tyāgadhvaja namo'stu te || 7 ||",
  "SA05n898:15": "vajrahāsa mahāhāsa mahāprītipramodana |",
  "SA05n898:16": "prītivega ratiprīte dharmaprīte namo'stu te || 8 ||",
  "SA05n898:17": "vajradharma mahādharma sarvadharmasuśodhaka |",
  "SA05n898:18": "buddhadharma sudharmāgrya rāgadharma namo'stu te || 9 ||",
  "SA05n898:19": "vajratīkṣṇa mahākośa prajñājñāna mahāmate |",
  "SA05n898:20": "pāpacchedamahākhaḍga buddhaśastra namo'stu te || 10 ||",
  "SA05n898:21": "vajrahetu mahācakra buddhacakra mahānidhe |",
  "SA05n898:22": "sarvamaṇḍaladharmāgra dharmacakra namo'stu te || 11 ||",
  "SA05n898:23": "vajrabhāṣa mahābhāṣa niṣprapañca mahākṣara |",
  "SA05n898:24": "anakṣara mahājāpa buddhavāca namo'stu te || 12 ||",
  "SA05n898:25": "vajrakarma sukarmāgrya mahākarma sukarmakṛt |",
  "SA05n898:26": "guhyapūja mahāpūja buddhapūja namo'stu te || 13 ||",
  "SA05n898:27": "vajrarakṣa mahāvarma kavacāgrya mahādṛḍha |",
  "SA05n898:28": "mahārakṣa mahāsāra buddhavīrya namo'stu te || 14 ||",
  "SA05n898:29": "vajrayakṣa mahākrodha sarvaduṣṭabhayānaka |",
  "SA05n898:30": "sarvabuddhamahopāya agrayakṣa namo'stu te || 15 ||",
  "SA05n898:31": "mahāsandhi mahāmudra mahāsamayabandhaka |",
  "SA05n898:32": "mahāmuṣṭe samudrāgrya vajramuṣṭe namo'stu te || 16 ||",
  "SA05n898:33": "vandyo mānyaśca pūjyaśca satkartavyastathāgataiḥ |",
  "SA05n898:34": "yasmādanādinidhanaṃ bodhicittaṃ tvamucyase || 17 ||",
  "SA05n898:35": "tvāmāsādya jināḥ sarve bodhisattvāśca śauriṇaḥ |",
  "SA05n898:36": "saṃbhūtāḥ saṃbhaviṣyanti buddhabodhyagrahetavaḥ || 18 ||",
  "SA05n898:37": "namaste vajrasattvāya vajraratnāya te namaḥ |",
  "SA05n898:38": "namaste vajradharmāya namaste vajrakarmaṇe || 19 ||",
  "SA05n898:39": "tvāmabhiṣṭutya nāmāgraiḥ praṇamya ca subhāvataḥ |",
  "SA05n898:40": "yatpuṇyaṃ tena sarvo hi buddhabodhimavāpnuyāt || 20 ||",
  "SA05n898:41": "idamuccārayetsamyag nāmāṣṭaśatamuttamam |",
  "SA05n898:42": "sakṛdvāraṃ subhaktisthaḥ sarvabuddhatvamāpnuyāt || 21 ||",
  "SA05n898:43": "śrīvajrapāṇināmāṣṭottaraśatastotraṃ samāptam |"
}