{
  "S08n738:0": "CHAPTER 25",
  "S08n738:1": "SARVA-KALPA-GUHYOTTARA-TANTRA-VIDHI-VISTARA",
  "S08n738:2": "atha vajrapāṇirmahābodhisatvaḥ sarvatathāgatadharmottamasiddhitantramudājahāra |",
  "S08n738:3": "tatredaṃ tathāgatadharmottamasiddhitantraṃ",
  "S08n738:4": "buddhadharmasamādhiṃ tu bhāvayan susamāhitaḥ |",
  "S08n738:5": "buddhānusmṛtiyogena siddhimāpnotyuttamām ||",
  "S08n738:6": "ityāha bhagavāṃstathāgataḥ |",
  "S08n738:7": "tatredaṃ tathāgatakuladharmottamasiddhitantraṃ |",
  "S08n738:8": "sarvasatvasamādhisthaḥ bhāvayan susamāhitaḥ |",
  "S08n738:9": "rāgānusmṛtiyogena prāpnuyāt siddhimuttamām ||",
  "S08n738:10": "ityāha bhagavān sarvatathāgatasamādhiḥ ||",
  "S08n738:11": "tatredaṃ vajrakuladharmottamasiddhitantraṃ |",
  "S08n738:12": "trilokavijayākāraṃ bhāvayan puratastathā |",
  "S08n738:13": "vajrapāṇibalo bhūtvā trilokavijayī bhaved ||",
  "S08n738:14": "ityāha bhagavān vajrasatvaḥ ||",
  "S08n738:15": "tatredaṃ padmakuladharmottamasiddhitantraṃ |",
  "S08n738:16": "jagadvinayadharmaṃ tu bhāvayan puratasta[thā |]",
  "S08n738:17": "sarvākāravaropetaṃ vinayaṃ prakaroti sa ||",
  "S08n738:18": "ityāha bhagavān vajradharmaḥ ||",
  "S08n738:19": "tatredaṃ maṇikuladharmottamasiddhitantraṃ |",
  "S08n738:20": "sarvārthasiddhirā[kāraṃ bhāvayan puratastathā |",
  "S08n738:21": "sarvākāravaropetamarthasaṃpatsa lapsyate- ||",
  "S08n738:22": "tyāha bhagavān vajrapāṇiḥ ||",
  "S08n738:23": "sarvakuladharmottamasiddhividhivistaratantraṃ ||",
  "S08n738:24": "atha vajrapāṇirmahābodhisatvaḥ sarvatathāgatadharmasamayasiddhitantramudājahāra |",
  "S08n738:25": "tatredaṃ tathāgatadharmasamayasiddhitantraṃ |",
  "S08n738:26": "buddhā[nusmṛ]timāṃ bhūtvā vajra vajra iti brūvan |",
  "S08n738:27": "sūkṣmavajraprayogeṇa buddhasiddhimavāpnute- ||",
  "S08n738:28": "tyāha bhagavān buddhaḥ ||",
  "S08n738:29": "tatredaṃ tathāgatakuladharmasamayasiddhitantraṃ |",
  "S08n738:30": "vajrasatvasamādhintu bhāvayan sūkṣmavajrataḥ |",
  "S08n738:31": "vajrasatvatvamāpnoti vajrasatvamudāharanna ||",
  "S08n738:32": "ityāha bhagavān vajrasatvaḥ ||",
  "S08n738:33": "tatredaṃ vajrakuladharmasamayasiddhitantraṃ |",
  "S08n738:34": "trilokavijayākāran saṃsmaran puratastathā |",
  "S08n738:35": "huṃ huṃ huṃ humiti procya siddhimāpnotyanuttarām ||",
  "S08n738:36": "ityāha bhagavān vajrahuṃkāraḥ |",
  "S08n738:37": "tatredaṃ padmakuladharmasamayasiddhitantraṃ |",
  "S08n738:38": "jagadvinayarūpaṃ tu bhāvayan sūkṣmavajrataḥ |",
  "S08n738:39": "śudhya śudhya iti procya uttamāṃ siddhimāpnute- ||",
  "S08n738:40": "tyāha bhagavān vajradharmaḥ |",
  "S08n738:41": "tatredaṃ maṇikuladharmasamayasiddhitantraṃ |",
  "S08n738:42": "sarvārthasiddhirūpaṃ tu bhāvayan sūkṣmavajrataḥ |",
  "S08n738:43": "sidhya sidhya iti procya arthasiddhiḥ parā bhaved ||",
  "S08n738:44": "ityāha bhagavān maṇidharmaḥ ||",
  "S08n738:45": "sarvakuladharmasamayasiddhividhivistaratantraṃ ||",
  "S08n738:46": "atha vajrāpāṇirmahābodhisatvaḥ sarvatathāgatasaddharmajñānasiddhitantramudājahāra |",
  "S08n738:47": "tatredaṃ sarvatathāgatasaddharmajñānasiddhitantra |",
  "S08n738:48": "anakṣaraṃ tu saddharmaṃ samādhijñānasaṃbhavaṃ |",
  "S08n738:49": "akārastena dharmāṇāmanutpāda iti smṛtaḥ ||1 ||",
  "S08n738:50": "anena mudrāprayogeṇa bhāvayan prajñayā tataḥ |",
  "S08n738:51": "sarvākṣaramayaṃ jñānaṃ sidhyate saugataṃ kṣaṇād ||2 ||",
  "S08n738:52": "ityāha bhagavān āryamañjuśrīsarvatathāgataḥ ||",
  "S08n738:53": "tatredaṃ tathāgatakulasaddharmajñānasiddhitantraṃ |",
  "S08n738:54": "sarvatathāgataṃ tatvamidaṃ sūtraṃ tu śraddadhan |",
  "S08n738:55": "dhārayan vācayan śrāddhaḥ siddhimāpnotyanuttarām ||",
  "S08n738:56": "ityāha bhagavān vajrasatvaḥ |",
  "S08n738:57": "tatredaṃ vajrakulasaddharmajñānasiddhitantraṃ |",
  "S08n738:58": "pāpasatvahitārthāya buddhājñākaraṇāya ca |",
  "S08n738:59": "duṣṭānāṃ vinayārthāya māraṇena tu sidhyatī- ||",
  "S08n738:60": "tyāha bhagavān vajrakulaḥ ||",
  "S08n738:61": "tatredaṃ padmakulasaddharmajñānasiddhitantraṃ |",
  "S08n738:62": "svabhāvaśuddhimāgamya paramārthamiti smṛtaṃ |",
  "S08n738:63": "bhāvayannidamādyaṃ tu dharmeṇāśu prasidhyatī- ||",
  "S08n738:64": "tyāha bhagavānavalokiteśvaraḥ ||",
  "S08n738:65": "tatredaṃ maṇikulasaddharmajñānasiddhitantraṃ |",
  "S08n738:66": "sarvasatvārthadānaṃ ca sarvāśāparipūraye |",
  "S08n738:67": "imaṃ maṇikule dharma bhāvayannāśu sidhyatī- ||",
  "S08n738:68": "tyāha bhagavān dharmaratnaḥ ||",
  "S08n738:69": "sarvakulasaddharmajñānasiddhividhivistaratantraṃ ||",
  "S08n738:70": "atha vajrapāṇirmahābodhisatvaḥ sarvatathāgatasamādhikarmasiddhitantramudājahāra |",
  "S08n738:71": "tatredaṃ tathāgatasamādhikarmasiddhitantraṃ |",
  "S08n738:72": "samādhikarma buddhānāṃ buddhabodhiprasādhakaṃ |",
  "S08n738:73": "idaṃ bhāvayamānastu parāṃ siddhimavāpnuyād ||",
  "S08n738:74": "ityāha bhagavān buddhaḥ ||",
  "S08n738:75": "tatredaṃ [tathāgata] kulasamādhikarmasiddhitantraṃ ||",
  "S08n738:76": "vajrasatvasamādhīnāmuttamaṃ karmabhūri ca |",
  "S08n738:77": "sarvasatvakaraṃ viśvamiti bhāvena sidhyatī- ||",
  "S08n738:78": "tyāha bhagavān vajraḥ ||",
  "S08n738:79": "tatredaṃ vajrakulasamādhikarmasiddhitantraṃ |",
  "S08n738:80": "pāpaśuddhinimittaṃ hi sarvapāpapradāmakaṃ |",
  "S08n738:81": "māraṇaṃ sarvasatvānāṃ śraddadhānāttu sidhyatī- ||",
  "S08n738:82": "tyāha bhagavān vajrī ||",
  "S08n738:83": "tatredaṃ padmakulasamādhikarmasiddhitantraṃ |",
  "S08n738:84": "sarvapāpaviśuddhātmā sarvaśuddhyā karoti saḥ |",
  "S08n738:85": "sarvakāryāṇi karmeyamiti bhāvena sidhyati ||",
  "S08n738:86": "ityāha bhagavān padmaḥ ||",
  "S08n738:87": "tatredaṃ maṇikulasamādhikarmasiddhitantraḥ |",
  "S08n738:88": "sarvāśināṃ daridrāṇāṃ sarvāśāḥ paripūrayan |",
  "S08n738:89": "sarvārthasiddhiḥ sarvātmā sidhyate nātra saṃśaya ||",
  "S08n738:90": "ityāha bhagavān ratnadhvajaḥ ||",
  "S08n738:91": "sarvakulasamādhikarmasiddhividhivistaratantraḥ ||",
  "S08n738:92": "atha vajrapāṇirmahābodhisatvaḥ sarvatathāgatasūkṣmajñānasiddhitantramudājahāra |",
  "S08n738:93": "tatredaṃ tathāgatasūkṣmajñānasiddhitantraṃ bhavati |",
  "S08n738:94": "sūkṣmavajravidhiṃ śāśvat yojayaṃ sarvabhāvataḥ |",
  "S08n738:95": "sarvākāravaropetāṃ pañcābhijñāmavāpnuyād ||",
  "S08n738:96": "ityāha bhagavān buddhaḥ ||",
  "S08n738:97": "tatredaṃ sarvatathāgatakulasūkṣmajñānasiddhitantraṃ |",
  "S08n738:98": "nānācāryasya nānyasya nāśiṣyasyāsutasya vā |",
  "S08n738:99": "purataḥ prakāśayenmudrāḥ siddhirāsāṃ suguhyata ||",
  "S08n738:100": "ityāha bhagavān vajradharaḥ |",
  "S08n738:101": "tatredaṃ vajrakulasūkṣmajñānasiddhitantraṃ |",
  "S08n738:102": "sūkṣmavajraprayogeṇa nāsā huṃ-kārayogataḥ |",
  "S08n738:103": "vajrakrodhasamādhisthaḥ sarvakāryāṇi sādhayed ||",
  "S08n738:104": "ityāha bhagavān vajraḥ ||",
  "S08n738:105": "tatredaṃ padmakulasūkṣmajñānasiddhitantraṃ |",
  "S08n738:106": "vajradṛṣṭiṃ samādhāya sūkṣmavajraprayogataḥ |",
  "S08n738:107": "mahāpadmasamādhisthaḥ rāgasiddhimavāpnuyād ||",
  "S08n738:108": "ityāha bhagavān padmarāgaḥ ||",
  "S08n738:109": "tatredaṃ maṇikulasūkṣmajñānasiddhitantraṃ |",
  "S08n738:110": "dīptadṛṣṭiḥ susūkṣmā tu vajraratnasamādhinā |",
  "S08n738:111": "sūkṣmavajraprayogeṇa sarvārthākarṣo bhaved ||",
  "S08n738:112": "ityāha bhagavān vajrapāṇiḥ |",
  "S08n738:113": "sarvakulasūkṣmajñānasiddhitantraṃ || ||",
  "S08n738:114": "atha vajrapāṇīrmahābodhisatvaḥ sarvatathāgatacakṣurjñānasiddhitantramudājahāra |",
  "S08n738:115": "tatredaṃ tathāgatacakṣurjñānasiddhitantraṃ |",
  "S08n738:116": "yadā mudrā samādhirvā sādhanāyopayujyati |",
  "S08n738:117": "tadā khe dhātavaḥ śubhrāstārakākārāḥ sa paśyati ||1 ||",
  "S08n738:118": "tadā jānīta matimāṃ buddhacakṣuridaṃ mama |",
  "S08n738:119": "tataḥ prabhṛti buddhānāṃ sarvakalpāni sādhayed ||2 ||",
  "S08n738:120": "ityāha bhagavān buddhaḥ ||",
  "S08n738:121": "tatredaṃ tathāgatakulacakṣurjñānasiddhitantraṃ |",
  "S08n738:122": "yāvanto bhāvā vidyante sthāvarā jaṃgamāstathā |",
  "S08n738:123": "teṣāṃ pratibimbāni paśyati khe pradhāvataḥ ||1 ||",
  "S08n738:124": "āgacchaṃ gacchato vai vajracakṣurviśuddhitāṃ |",
  "S08n738:125": "jānanvai pūjayā siddhimāpnotyanuttarām ||2 ||",
  "S08n738:126": "ityāha bhagavān vajrasatvaḥ ||",
  "S08n738:127": "tatredaṃ vajrakulacakṣurjñānasiddhitantraṃ |",
  "S08n738:128": "savyāpasavyavartibhyo khe taḥ paśyati cakṣuṣā |",
  "S08n738:129": "ākāśadhātavaḥ śīghraṃ bhramanto aṃbhrasannibhāḥ ||1 ||",
  "S08n738:130": "tāṃ dṛṣṭvā na hi bibhyeta mudrāstā vajrasaṃbhavāḥ |",
  "S08n738:131": "teṣāṃ grahaṇato mudrāḥ sidhyante mudracakṣuṣā ||2 ||",
  "S08n738:132": "ityāha bhagavān vajraḥ ||",
  "S08n738:133": "tatredaṃ padmakula cakṣurjñānasiddhitantraṃ |",
  "S08n738:134": "śvetāṃ raktāṃ sitāṃ pitāṃ yadā paśyanti maṇḍalān |",
  "S08n738:135": "tadābhi[prāyaṃ vai] yānti sidhyante vajracakṣuṣā ||2 ||",
  "S08n738:136": "ityāha bhagavānavalokiteśvaraḥ |",
  "S08n738:137": "tatredaṃ maṇikulacakṣurjñānasiddhitantraṃ |",
  "S08n738:138": "ākāśe ratnasaṃkāśā hiraṇyādiṣu sādṛśāḥ |",
  "S08n738:139": "yadā tu paśyate khe tu khacakṣuḥ sidhyate sade- |",
  "S08n738:140": "tyāha bhagavān vajragarbhaḥ |",
  "S08n738:141": "sarvakulacakṣurjñānasiddhividhivistaratantraṃ || ||",
  "S08n738:142": "atha vajrapāṇirmahābodhisatvaḥ sarvatathāgatakarmottamasiddhitantramudājahāra |",
  "S08n738:143": "tatredaṃ tathāgatakarmottamasiddhitantraṃ |",
  "S08n738:144": "karmamaṇḍalayogena pūjayaṃ sarvanāyakān |",
  "S08n738:145": "rāgasaukhyavipākārthaṃ buddhasiddhimavāpnuyād ||",
  "S08n738:146": "ityāha bhagavān buddhaḥ ||",
  "S08n738:147": "tatredaṃ tathāgatakulakarmottamasiddhitantraṃ |",
  "S08n738:148": "guhyapūjāṃ prakurvāṇo rāgo'hamiti bhāvayan |",
  "S08n738:149": "prāpnuyāduttamāṃ siddhiṃ vajrarāgasamadyutim ||",
  "S08n738:150": "ityāha bhagavān kāmaḥ ||",
  "S08n738:151": "tatredaṃ vajrakulakarmottamasiddhitantraṃ |",
  "S08n738:152": "guhyapūjāṃ prakurvāṇo krodho'hamiti bhāvayan |",
  "S08n738:153": "prāpnuyāduttamāṃ siddhiṃ trilokavijayopamām ||",
  "S08n738:154": "ityāha bhagavān vajrapāṇiḥ ||",
  "S08n738:155": "tatredaṃ padmakulakarmottamasiddhitantraṃ |",
  "S08n738:156": "antargatena manasā kāmaśuddhiṃ tu bhāvayan |",
  "S08n738:157": "svare'to bindubhirbuddhāṃ pūjayaṃ siddhimāpnuyād ||",
  "S08n738:158": "ityāha bhagavānavalokiteśvaraḥ ||",
  "S08n738:159": "tatredaṃ maṇikulakarmottamasiddhitantraṃ |",
  "S08n738:160": "vajragarvā samādhāya namedāśayakampitaiḥ |",
  "S08n738:161": "praṇāmaparamo nityamabhiṣekāṃ samāpnuyād ||",
  "S08n738:162": "ityāha bhagavān vajrābhiṣekaratnaḥ ||",
  "S08n738:163": "sarvakulakarmottamasiddhividhividhivistaratantraḥ ||",
  "S08n738:164": "atha vajrapāṇirmahābodhisatvaḥ sarvatathāgatakarmasamayaguhyasiddhitantramudājahāra |",
  "S08n738:165": "tatrāyaṃ tathāgatakarmasamayaguhyasiddhitantraḥ |",
  "S08n738:166": "kāmādyāḥ sarvasaukhyā me sadaiva hṛdaye sthitāḥ |",
  "S08n738:167": "aho satvārthānāmavirāgo yatra deśyate ||1 ||",
  "S08n738:168": "ayaṃ hi karmasamayastathāgatasamādhinā |",
  "S08n738:169": "bhāvayaṃ pūjayed buddhāmuttamāṃ siddhimāpnuyād ||2 ||",
  "S08n738:170": "ityāha bhagavān buddhaḥ ||",
  "S08n738:171": "tatrāyaṃ tathāgatakulakarmasamayaguhyasiddhitantraḥ |",
  "S08n738:172": "samantabhadraḥ kāmo'haṃ sarvasatvasukhapradaḥ |",
  "S08n738:173": "vajrasatvasamādhisthaḥ pūjayaṃ siddhimāpnuyād ||",
  "S08n738:174": "ityāha bhagavān kāmaḥ ||",
  "S08n738:175": "tatrāyaṃ vajrakulakarmasamayaguhyasiddhitantraḥ |",
  "S08n738:176": "samantabhadraḥ krodho'haṃ sarvasatvahitaṃkaraḥ |",
  "S08n738:177": "vajrahuṃkārayogena pūjayaṃ siddhimāpnuyād ||",
  "S08n738:178": "ityāha bhagavān vajrapāṇiḥ ||",
  "S08n738:179": "tatrāyaṃ padmakulakarmasamayaguhyasiddhitantraḥ |",
  "S08n738:180": "samantabhadro rāgo'haṃ sarvasaukhyapradaḥ svayaṃ |",
  "S08n738:181": "jagadvinayarūpasthaḥ pūjayaṃ siddhimāpnuyād ||",
  "S08n738:182": "ityāha bhagavān padmarāgaḥ ||",
  "S08n738:183": "tatrāyaṃ maṇikulakarmasamayaguhyasiddhitantraḥ |",
  "S08n738:184": "samantabhadro rājāhaṃ sarvasatva[mahārthadaḥ |",
  "S08n738:185": "sarvārthasiddhirūpeṇa] pūjayaṃ siddhimāpnuyād ||",
  "S08n738:186": "ityāha bhagavān sarvārthasiddhiḥ ||",
  "S08n738:187": "sarvakulakarmasamayaguhyasiddhividhivistaratantraṃ ||",
  "S08n738:188": "atha vajrapāṇirmahābodhisatvaḥ sarvatathāgatakarmadharmatottamasiddhitantramudājahāra |",
  "S08n738:189": "tatrāyaṃ tathāgatakarmadharmatottamasiddhitantraḥ |",
  "S08n738:190": "dakṣiṇāgryābhimukhataḥ kavacaṃ svasamādhinā |",
  "S08n738:191": "nibadhyoṣṇīṣasaṃsthā tu rakṣātyantaṃ bhaviṣyatī- ||",
  "S08n738:192": "tyāha bhagavān buddhaḥ ||",
  "S08n738:193": "tatrāyaṃ tathāgatakulakarmadharmottamasiddhitantraḥ |",
  "S08n738:194": "saṃlikhya tu bhagākāraṃ kuḍye meḍhraṃ samucchritaṃ |",
  "S08n738:195": "yāṃ striyaṃ cintayan mṛduṃ kuryātsāsya vaśībhaved ||",
  "S08n738:196": "ityāha bhagavānāryavajrapāṇiḥ ||",
  "S08n738:197": "tatrāyaṃ vajrakulakarmadharmottamasiddhitantraḥ |",
  "S08n738:198": "bhūmau yakṣamukhaṃ likhya tasyāgryāṅgu lito nakhaṃ |",
  "S08n738:199": "nihatya cakṣurdeśe tu samākarṣetstriyo varāḥ ||",
  "S08n738:200": "ityāha bhagavān vajrasatvaḥ ||",
  "S08n738:201": "tatrāyaṃ padmakulakarmadharmottamasiddhitantraḥ |",
  "S08n738:202": "padmaṃ gṛhya karābhyāṃ tu nirīkṣya rāgaśuddhitāṃ |",
  "S08n738:203": "vajradṛṣṭyā tu sa strīṇāṃ rāgayedabhitastathe- ||",
  "S08n738:204": "tyāha bhagavān vajradharaḥ ||",
  "S08n738:205": "tatrāyaṃ maṇikulakarmadharmottamasiddhitantraḥ |",
  "S08n738:206": "vajraratnasamādhistho maṇiṃ gṛhya [dvi]pāṇinā |",
  "S08n738:207": "ratnahuṃkārayogena mārayetsarvayoṣitaḥ ||",
  "S08n738:208": "ityāha bhagavān vajrahuṃkāraḥ ||",
  "S08n738:209": "sarvakulakarmadharmottamasiddhividhivistaratnatraḥ || ||",
  "S08n738:210": "atha vajrapāṇirmahābodhisatvaḥ sarvatathāgatakarmakāryasiddhitantramudājahāra |",
  "S08n738:211": "tatrāyaṃ tathāgatakarmakāryasiddhitantraḥ |",
  "S08n738:212": "pūjākarmavidhiṃ yojya yadyat kāryaṃ tu cintayet |",
  "S08n738:213": "tattad vijñāpya mudrāṃ tu sādhayeta vicakṣaṇaḥ ||",
  "S08n738:214": "ityāha bhagavān vajradhātuḥ ||",
  "S08n738:215": "tatrāyaṃ tathāgatakulakarmakāryasiddhitantraḥ |",
  "S08n738:216": "guhyapūjāvidhiṃ yojya vajrasatvasamādhinā |",
  "S08n738:217": "yatkāryaṃ vadate tattu śīghraṃ siddhimavāpnuyād ||",
  "S08n738:218": "ityāha bhagavān vajradharaḥ ||",
  "S08n738:219": "tatrāyaṃ vajrakulakarmakāryasiddhitantraḥ |",
  "S08n738:220": "kulaguhyamahāpūjāṃ kṛtvā krodhasamādhinā |",
  "S08n738:221": "yatkiñciccintayetprājñaḥ sa śīghraṃ siddhimeṣyatī- ||",
  "S08n738:222": "tyāha bhagavān vajrakrodhaḥ |",
  "S08n738:223": "tatrāya padmakulakarmakāryasiddhitantraḥ |",
  "S08n738:224": "kṛtvā tu manasīṃ pūjāṃ lokeśvarasamādhinā |",
  "S08n738:225": "yatkāryaṃ cintayetprājñaḥ tatsarvaṃ śīghramāpnuyād ||",
  "S08n738:226": "ityāha bhagavān padmadharaḥ ||",
  "S08n738:227": "tatrāyaṃ maṇikulakarmakāryasiddhitantraḥ |",
  "S08n738:228": "kṛtvā dhūpādibhiḥ pūjāṃ vajragarbhasamādhinā |",
  "S08n738:229": "yatkāryaṃ cintayetprājñaḥ tatsarvaṃ sidhyati kṣaṇād ||",
  "S08n738:230": "ityāha bhagavān vajragarbhaḥ ||",
  "S08n738:231": "sarvakula[karmakārya]siddhividhivistaratantraṃ ||",
  "S08n738:232": "atha vajrapāṇirmahābodhisatvaḥ sarvatathāgatamudrābhāvanā[dhiṣṭhānayoga siddhitantramudājahāra | ]",
  "S08n738:233": " tatrāyaṃ tathāgatādhiṣṭhānayogasiddhitantro bhavati |",
  "S08n738:234": "sūkṣmavajraprayogeṇa buddhayogasamāhitaḥ |",
  "S08n738:235": "uttamāsi[ddhimāpnuyād] buddhamudrāprasādhaka ||",
  "S08n738:236": "ityāha bhagavān vajrapāṇistathāgataḥ ||",
  "S08n738:237": "tatrāyaṃ tathāgatakulasatvādhiṣṭhānayogasiddhitantraḥ |",
  "S08n738:238": "satvo hi [sarvātmabhāvaḥ kāye']pyātmani saṃsthitaḥ |",
  "S08n738:239": "ityadhiṣṭhāya satvo'hamahaṃkāreṇa bhāvayan ||",
  "S08n738:240": "sidhyatītyāha bhagavān sarvatathāgatamahāyānābhisamaya[vajrasatvaḥ ||",
  "S08n738:241": "tatrāyaṃ va]jrakulavajrādhiṣṭhāna[yogasiddhitantraḥ |]",
  "S08n738:242": "yathā satvastathā mudrā yathā mudrāstathā hyahaṃ |",
  "S08n738:243": "anena bhāvayogena sarvamudrāḥ su[sādhayed ||",
  "S08n738:244": "ityāha bhagavān vajradharaḥ ||",
  "S08n738:245": "tatrāyaṃ padmakuladharmā]dhiṣṭhānayogasiddhitantraḥ |",
  "S08n738:246": "dharmamudrāprayogeṇa sūkṣmavajreṇa bhāvanā |",
  "S08n738:247": "vāṅmudrāṇāṃ [tu tatsarvaṃ mahāsatvasya samādhi ||",
  "S08n738:248": "ityāha bhagavānāryāvalokiteśvaraḥ ||]",
  "S08n738:249": "tatrāyaṃ maṇikulakarmādhiṣṭhānayogasiddhitantraḥ |",
  "S08n738:250": "sarvabuddhābhiṣekāṇi [pajāsamayasiddhayaḥ |",
  "S08n738:251": "bhagavāniti bhāvayan vajrakarmāṇi sādhayed ||",
  "S08n738:252": "ityāha bhagavān] vajrakarma ||",
  "S08n738:253": "sarvakulamudrābhāva [nāsiddhitantraṃ || ||",
  "S08n738:254": "atha] bhagavan[sarvatathāgatāḥ] punaḥ samājamāgamya,",
  "S08n738:255": "bhagavate sarvatathāgatacakravartine vajrapāṇaye mahābodhisatvāya sādhukārāṇyadaduḥ |",
  "S08n738:256": "sādhu te vajrasatvāya [vajraratnā]ya sādhu te |",
  "S08n738:257": "[vajradharmāya te sādhu sādhu te] vajrakarmaṇe ||",
  "S08n738:258": "subhāṣitamidaṃ sūtraṃ vajrayānamanuttaraṃ |",
  "S08n738:259": "sarvatathāgataṃ guhyaṃ mahāyānābhisaṃ[graham || iti ||]",
  "S08n738:260": "sarvatathāgatatatvasaṃgrahāt sarvakalpaguhyottaratantravidhivistaraḥ parisamāptaḥ ||"
}