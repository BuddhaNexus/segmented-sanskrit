{
  "SA05n802:0": "ādibuddhadvādaśakastotram",
  "SA05n802:1": "om nama ādibuddhāya",
  "SA05n802:2": "namaste buddharūpāya dharmarūpāya te namaḥ |",
  "SA05n802:3": "namaste saṃgharūpāya pañcabuddhātmane namaḥ || 1 ||",
  "SA05n802:4": "pṛthvīrūpāyābrūpāya tejorūpāya te namaḥ |",
  "SA05n802:5": "namaste vāyurūpāyākāśarūpāya te namaḥ || 2 ||",
  "SA05n802:6": "brahmaṇe sattvarūpāya rajorūpāya viṣṇave |",
  "SA05n802:7": "tamorūpamaheśāya jñānarūpāya te namaḥ || 3 ||",
  "SA05n802:8": "prajñopāyātmarūpāya guhyarūpāya te namaḥ |",
  "SA05n802:9": "digrūpalokapālāya viśvarūpāya te namaḥ || 4 ||",
  "SA05n802:10": "cakṣūrūpāya karṇāya ghrāṇarūpāya jihvake |",
  "SA05n802:11": "kāyarūpāya śrīdharmarūpāya manase namaḥ || 5 ||",
  "SA05n802:12": "namaste rūparūpāya rasarūpāya te namaḥ |",
  "SA05n802:13": "gandharūpa-śabdarūpa-sparśarūpāya te namaḥ || 6 ||",
  "SA05n802:14": "dharmarūpadhārakāya ṣaḍindriyātmane namaḥ |",
  "SA05n802:15": "māṃsāsthimedamajjānāṃ saṃghātarūpiṇe namaḥ || 7 ||",
  "SA05n802:16": "rūpāya jaṅgamānāṃ te sthāvarāṇāṃ ca murtaye |",
  "SA05n802:17": "tiraścāṃ moharūpāya rūpāyāścaryamūrtaye || 8 ||",
  "SA05n802:18": "sṛṣṭikartre janmarūpa kālarūpāya mṛtyave |",
  "SA05n802:19": "bhavyāya vṛddharūpāya bālāya te namo namaḥ || 9 ||",
  "SA05n802:20": "prāṇāpānasamānodānavyānamūrtaye namaḥ |",
  "SA05n802:21": "varṇāpavarṇarūpāya bhoktre tanmūrtaye namaḥ || 10 ||",
  "SA05n802:22": "dinarūpāya sūryāya candrāya rātrirūpiṇe |",
  "SA05n802:23": "tithirūpāya nakṣatrayogavārādimurtaye || 11 ||",
  "SA05n802:24": "bāhyābhyantararūpāya laukikāya namonamaḥ |",
  "SA05n802:25": "nairvāṇāya namastubhyaṃ bahurūpāya te namaḥ || 12 ||",
  "SA05n802:26": "ādibuddhadvādaśakaṃ puṇyaṃ prātaḥ paṭhiṣyati |",
  "SA05n802:27": "yadicchati labhennūnaṃ manujo nityaniścayaḥ || 13 ||",
  "SA05n802:28": "śrīmañjuśrīkṛtamādibuddhadvādaśakastotraṃ samāptam |"
}