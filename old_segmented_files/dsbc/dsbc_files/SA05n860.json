{
  "SA05n860:0": "mahāpratisarāstotram",
  "SA05n860:1": "om namaḥ śrīmahāpratisarāyai",
  "SA05n860:2": "yasyāḥ smaraṇamātreṇa sarve pāpāḥ kṣayaṃ gatāḥ |",
  "SA05n860:3": "yayā yukto vajrakāyo namastasyai namo namaḥ || 1 ||",
  "SA05n860:4": "yāṃ smaran rākṣasaḥ krūro māṭharaṃ kukṣisaṃsthitam |",
  "SA05n860:5": "prākṣipad goviṣaṃ nadyāṃ namastasyai namo namaḥ || 2 ||",
  "SA05n860:6": "yā'rakṣat vaṇijaḥ putraṃ krūrasarpād vadhodyatāt |",
  "SA05n860:7": "viṣadāhamumūrṣuṃ ca namastasyai namo namaḥ || 3 ||",
  "SA05n860:8": "brahmadatto mahārājo yayā rakṣitamastakaḥ |",
  "SA05n860:9": "ripuṃ jitvā virājo'bhūnnamastasyai namo namaḥ || 4 ||",
  "SA05n860:10": "bhikṣurduḥśīlako rogī yayā kaṇṭhe prabandhitaḥ |",
  "SA05n860:11": "prāṇānmuktvā yayau svargaṃ namastasyai namo namaḥ || 5 ||",
  "SA05n860:12": "samudre potasaṃkṣubdhe vaṇijāṃ prāṇarakṣakaḥ |",
  "SA05n860:13": "yāṃ smaran sārthavāho'bhūnnamastasyai namo namaḥ || 6 ||",
  "SA05n860:14": "yasyāṃ ca pratibaddhāyāṃ bhāryāyāṃ sutamāptavān |",
  "SA05n860:15": "prasāritabhujo rājā namastasyai namo namaḥ || 7 ||",
  "SA05n860:16": "daridro yāṃ prati smṛtvā dīnārān pradadau jine |",
  "SA05n860:17": "rājā'bhīṣṭapradātā'bhūnnamastasyai namo namaḥ || 8 ||",
  "SA05n860:18": "yāṃ prabaddhvā'surairyuddhaṃ śakraścūḍāmaṇau prabhuḥ |",
  "SA05n860:19": "labdhavān vijayaṃ vajrī namastasyai namo namaḥ || 9 ||",
  "SA05n860:20": "yasyā mantrabalenaiva pūrya pāramitāśca ṣaṭ |",
  "SA05n860:21": "mārā jitā jinairbuddhairnamastasyai namo namaḥ || 10 ||",
  "SA05n860:22": "apadhīro vadhārho'pi prakṣiptaḥ sarvasaṅkaṭe |",
  "SA05n860:23": "yāṃ smṛtvā parimukto'bhūnnamastasyai namo namaḥ || 11 ||",
  "SA05n860:24": "yayā bandhitakaṇṭhaśca mukto'bhūt pāpasaṅkaṭāt |",
  "SA05n860:25": "nagare nāyako'bhūcca namastasyai namo namaḥ || 12 ||",
  "SA05n860:26": "yā cā'parājitā vidyā sarvabuddhaiśca dhāritā |",
  "SA05n860:27": "mudritā bhāṣitā nityaṃ paṭhitā parideśitā || 13 ||",
  "SA05n860:28": "likhitā moditā sattvahitāya pūjitā sadā |",
  "SA05n860:29": "smṛtā kāyagatā kṛtvā namastasyai namo namaḥ || 14 ||",
  "SA05n860:30": "yasyāḥ smaraṇamātrānna durlabhaṃ bhuvanatraye |",
  "SA05n860:31": "pāṭhasvādhyāyanādvāpi namastasyai namo namaḥ || 15 ||",
  "SA05n860:32": "yā vidyā durlabhā buddhairvyākṛtā suptaśaṃsitā |",
  "SA05n860:33": "mahatī dhāraṇī khyātā sarvapāpakṣayaṅkarī || 16 ||",
  "SA05n860:34": "mahābalā mahāvīryā mahātejā mahatprabhā |",
  "SA05n860:35": "mahāguṇavatī vidyā sarvabhāravidāraṇī || 17 ||",
  "SA05n860:36": "pāpasandhisamudghātī mārabandhapramocanī |",
  "SA05n860:37": "jananī bodhisattvānāṃ sarvaduṣṭavināśinī || 18 ||",
  "SA05n860:38": "rakṣaṇī poṣaṇī dhātrī paramantravighātinī |",
  "SA05n860:39": "kārkhodaviṣayogānāṃ vidhvaṃsanakarī śivā || 19 ||",
  "SA05n860:40": "mahādhyānaratānāṃ ca gṛhṇatāṃ likhatāṃ sadā |",
  "SA05n860:41": "pāṭhādhyayanakṛtāṃ nityaṃ dadhatāṃ śṛṇvatāṃ tathā || 20 ||",
  "SA05n860:42": "parebhyo deśitā caiva nityaṃ manasi bhāvitā |",
  "SA05n860:43": "sā pustakagatāṃ kṛtvā pūjyamānā namaskṛtā || 21 ||",
  "SA05n860:44": "sarvapāpaharī bhadrā bodhisaṃbhārapūriṇī |",
  "SA05n860:45": "namastasyai namastasyai namastasyai namo namaḥ || 22 ||",
  "SA05n860:46": "yasyā mantraprabhāveṇa sarvabhayānyupadravāḥ |",
  "SA05n860:47": "duṣṭāḥ suramanuṣyāśca daityagandharvarākṣasāḥ || 23 ||",
  "SA05n860:48": "grahāḥ skandā apasmārāḥ piśācā yakṣakinnarāḥ |",
  "SA05n860:49": "ḍākinyaḥ śākinīsaṃghā nāgā kārkhodavyādhayaḥ || 24 ||",
  "SA05n860:50": "jvarāśca vividhā rogāḥ parakarmakṛtāstathā |",
  "SA05n860:51": "viṣāgniśastramantrāṇi vidyutaḥ kālavāyavaḥ || 25 ||",
  "SA05n860:52": "ativṛṣṭiranāvṛṣṭiḥ sarvaśatrubhayāni ca |",
  "SA05n860:53": "tathānye pāpasargā vā vinaśyanti na saṃśayaḥ || 26 ||",
  "SA05n860:54": "sarvakāryāṇi siddhyanti namastasyai namo namaḥ |",
  "SA05n860:55": "yaścaitāṃ dhārayedvidyāṃ kaṇṭhe bāhau ca mastake || 27 ||",
  "SA05n860:56": "nityaṃ rakṣanti devāstaṃ daityā nāgāśca mānuṣāḥ |",
  "SA05n860:57": "gandharvāḥ kinnarā yakṣā bhūtapretapiśācakāḥ || 28 ||",
  "SA05n860:58": "ḍākinyo rākṣasā dūtyaḥ kūṣmāṇḍāḥ kaṭhapūtanāḥ |",
  "SA05n860:59": "trisandhyaṃ yaḥ paṭhennityaṃ buddhā rakṣanti taṃ sadā || 29 ||",
  "SA05n860:60": "pratyekāḥ śrāvakāścaiva bodhisattvā mahardhikāḥ |",
  "SA05n860:61": "yoginaḥ siddhamantrāśca mahāvīryā maharṣayaḥ || 30 ||",
  "SA05n860:62": "vajrapāṇiśca yakṣendraḥ śakraśca tridaśaiḥ saha |",
  "SA05n860:63": "catvāraśca mahārājā brahmaviṣṇumaheśvarāḥ || 31 ||",
  "SA05n860:64": "nandikṛṣṇo mahākālaḥ kārtikeyo gaṇeśvaraḥ |",
  "SA05n860:65": "bhairavā mātṛkā durgāstathā'nye mārakāyikāḥ || 32 ||",
  "SA05n860:66": "vidyādevyo mahāvīryā mahābalaparākramāḥ |",
  "SA05n860:67": "māmakī bhṛkuṭī tārā cāṅkuśī vajraśṛṅkhalā || 33 ||",
  "SA05n860:68": "mahāśvetā mahākālī vajradūtī supāśikā |",
  "SA05n860:69": "vajramālā mahāvidyā suvīryā'mṛtakuṇḍalī || 34 ||",
  "SA05n860:70": "vajrā'parājitā caṇḍī kālakarṇī mahābalā |",
  "SA05n860:71": "tathā dhanyā mahābhāgā padmakuṇḍalireva ca || 35 ||",
  "SA05n860:72": "maṇicūḍā puṣpadantī svarṇakeśī ca piṅgalā |",
  "SA05n860:73": "ekajaṭā mahādevī dhanyā vidyunmālinī || 36 ||",
  "SA05n860:74": "kapālinī ca laṅkeśī brahmakṣitikanāyikā |",
  "SA05n860:75": "hārītī pāñcikāścaiva śaṅkhinī kūṭadantinī || 37 ||",
  "SA05n860:76": "śrīḥ sarasvatī lakṣmīḥ siddheśvarī sadānugā |",
  "SA05n860:77": "tamevā'nye'pi rakṣanti yasya vidyā kare sthitā || 38 ||",
  "SA05n860:78": "sa bhavet sarvasattvānāṃ mokṣārthaṃ ca samudyataḥ |",
  "SA05n860:79": "namastasyai namastasyai namastasyai namo namaḥ || 39 ||",
  "SA05n860:80": "śrīmahāpratisarāstotraṃ samāptam ||"
}