{
  "SA05n870:0": "buddhastotram",
  "SA05n870:1": "om namo buddhāya",
  "SA05n870:2": "namo'stu buddhāya viśuddhabodhaye",
  "SA05n870:3": "viśuddhadharmapratibhāsabuddhaye |",
  "SA05n870:4": "saddharmapuṇyopagatānubuddhaye",
  "SA05n870:5": "bhavāgraśūnyāya viśuddhabuddhaye || 1 ||",
  "SA05n870:6": "aho aho buddhamanantatejasaṃ",
  "SA05n870:7": "aho aho sāgaramerugulmam |",
  "SA05n870:8": "aho aho buddhamanantagocaram",
  "SA05n870:9": "audumbaraṃ puṣpamivātidurlabham || 2 ||",
  "SA05n870:10": "aho mahākāruṇikastathāgataḥ",
  "SA05n870:11": "aho aho śākyakulasya ketuḥ |",
  "SA05n870:12": "aho praṇamyaḥ sa narendrasūryo",
  "SA05n870:13": "yenedṛśaṃ bhāṣitasūtramuttamam || 3 ||",
  "SA05n870:14": "anugrahārthaṃ sa hi sarvasattvān",
  "SA05n870:15": "saddharmacaryāmupadiśya nūnam |",
  "SA05n870:16": "śānteśvaraḥ śākyamunistathāgataḥ",
  "SA05n870:17": "sattvottamaḥ śāntapuraṃ praviṣṭaḥ || 4 ||",
  "SA05n870:18": "gambhīraśāntaṃ virajāsamādhi-",
  "SA05n870:19": "padaṃ praviṣṭe jinabuddhagocare |",
  "SA05n870:20": "śūnyāśca kāyāstvatha śrāvakāṇāṃ",
  "SA05n870:21": "śūnyā vihārā dvipadottamānām || 5 ||",
  "SA05n870:22": "te sarvadharmā prakṛtiśca śūnyā",
  "SA05n870:23": "sattvā hi śūnyā nahi jātu vidyate || 6 ||",
  "SA05n870:24": "nityaṃ ca nityaṃ ca jinaṃ smarāmi",
  "SA05n870:25": "nityaṃ ca śocāmi jinasya darśanam |",
  "SA05n870:26": "nityaṃ ca nityaṃ praṇidhiṃ karomi",
  "SA05n870:27": "saṃbuddhapūjyasya ca darśanārtham || 7 ||",
  "SA05n870:28": "sthāpyeha nityaṃ dharaṇīṣu jānu",
  "SA05n870:29": "śokābhitapto jinadarśanāya |",
  "SA05n870:30": "odantakāruṇyavināyakastva-",
  "SA05n870:31": "matīva tṛṣṇā sugatasya darśane || 8 ||",
  "SA05n870:32": "satāṃ varo yadvijahāra nityaṃ",
  "SA05n870:33": "dadāhi me darśanatoyaśītalam |",
  "SA05n870:34": "sattvāḥ satṛṣṇāstava rūpadarśane",
  "SA05n870:35": "prahlādayainān karuṇājalena || 9 ||",
  "SA05n870:36": "kāruṇyabhāvaṃ kuru nātha nāyaka",
  "SA05n870:37": "dadāhi me darśanaṃ saumyarūpam |",
  "SA05n870:38": "tvaṃ pāhi trātarjagadekadeśitā",
  "SA05n870:39": "śūnyāśca kāyāstvatha śrāvakāṇām || 10 ||",
  "SA05n870:40": "ākāśatulyā gaganasvabhāvā",
  "SA05n870:41": "māyāmarīcyodakacandrakāyāḥ |",
  "SA05n870:42": "sarve ca sattvāḥ sukhitasvabhāvā",
  "SA05n870:43": "bhavantu bho nāyaka tvatprasādāt || 11 ||",
  "SA05n870:44": "bodhisattvasamuccayānāma kuladevatāviracitaṃ",
  "SA05n870:45": "buddhastotraṃ samāptam ||"
}