{
  "S04n487:0": "śālendrarājapūrvayogaparivarto dvitīyaḥ |",
  "S04n487:1": "atha khalu bhagavāṃstasyāṃ velāyāṃ candraprabhasya kumārabhūtasya etadeva pūrvayogaparivartaṃ bhūyasyā mātrayā gāthābhigītena vistareṇa saṃprakāśayati sma -",
  "S04n487:2": "smarati daśabalāna ṣaṣṭikoṭī",
  "S04n487:3": "purimabhave nivasiṃsu gṛdhrakūṭe |",
  "S04n487:4": "puri mama caramāṇu bodhicaryā-",
  "S04n487:5": "mima varaśānta samādhi deśayiṃsu || 1 ||",
  "S04n487:6": "teṣāṃ paścimako āsīllokanāthaḥ prabhaṃkaraḥ |",
  "S04n487:7": "śālendrarāja nāmena sa mayā paripṛcchitaḥ || 2 ||",
  "S04n487:8": "ahaṃ ca kṣatriyo āsaṃ rājaśreṣṭho mahīpatiḥ |",
  "S04n487:9": "maṃma co śata putrāṇāṃ pañcābhūvannanūnakāḥ || 3 ||",
  "S04n487:10": "koṭīmayā vihāraṇāṃ tasya buddhasya kāritā |",
  "S04n487:11": "candanasya viśiṣṭasya kecidratnamayā abhūta || 4 ||",
  "S04n487:12": "priyo manāpaśca bahujanasya",
  "S04n487:13": "bhīṣmottaro nāma abhūṣi rājā |",
  "S04n487:14": "akārṣi buddhasya viśiṣṭapūjā",
  "S04n487:15": "aṣṭādaśavarṣasahasrakoṭyaḥ || 5 ||",
  "S04n487:16": "jinasya tasya dvipadottamasya",
  "S04n487:17": "śālendrarājasya vināyakasya |",
  "S04n487:18": "ṣaṭūsaptativarṣasahasrakoṭiyo",
  "S04n487:19": "āyustadā āsi aninditasya || 6 ||",
  "S04n487:20": "niyutāntaśītisahasra śrāvakāṇāṃ",
  "S04n487:21": "traividya ṣaḍabhijña jitendriyāṇām |",
  "S04n487:22": "kṣīṇāsravāṇāntimadehadhāriṇāṃ",
  "S04n487:23": "saṃghastadā āsi narottamasya || 7 ||",
  "S04n487:24": "bahuprakārā mayi tasya pūjā",
  "S04n487:25": "kṛtā jinasya dvipadottamasya |",
  "S04n487:26": "arthāya lokasya sadevakasya",
  "S04n487:27": "imaṃ samādhiṃ pratikāṅtā sadā || 8 ||",
  "S04n487:28": "saputradāreṇa mi pravrajitvā",
  "S04n487:29": "śālendrarājasya jinasya antike |",
  "S04n487:30": "caturdaśavarṣasahasrakoṭiyo",
  "S04n487:31": "ayaṃ samādhiḥ paripṛcchito mayā || 9 ||",
  "S04n487:32": "aśīti gāthā niyutā sahasrā-",
  "S04n487:33": "ṇyanye ca koṭīśata bimbarāṇām |",
  "S04n487:34": "tasyodgṛhītaḥ sugatasya antikā-",
  "S04n487:35": "ditaḥ samādheḥ parivarta eṣaḥ || 10 ||",
  "S04n487:36": "hastā śirā bhārya tathaiva putrā",
  "S04n487:37": "ratnaṃ prabhūtaṃ tatha khādyabhojyam |",
  "S04n487:38": "na kiṃci dravyaṃ mi na tyaktapūrvam",
  "S04n487:39": "ima samādhiṃ pratikāṅkṣatā varam || 11 ||",
  "S04n487:40": "smarāmi buddhāna sahasrakoṭiyo",
  "S04n487:41": "taduttare yattika gaṅgavālukāḥ |",
  "S04n487:42": "yehi sthihitvā iha gṛdhrakūṭe",
  "S04n487:43": "ayaṃ samādhirvaru śānta deśitaḥ || 12 ||",
  "S04n487:44": "sarve ca śākyarṣabhanāmagheyāḥ",
  "S04n487:45": "sarveṣu co rāhula nāma putrāḥ |",
  "S04n487:46": "ānandanāmā paricārakāśca",
  "S04n487:47": "kapilāhvayāḥ pravrajitāśca sarve || 13 ||",
  "S04n487:48": "agreyugaṃ kolitaśāriputrā",
  "S04n487:49": "samanāma sarve ca abhūṣi tāyinaḥ |",
  "S04n487:50": "samanāmikā co tada lokadhātuḥ",
  "S04n487:51": "sarve'pi cotpanna kaṣāyakāle || 14 ||",
  "S04n487:52": "sarve mayā satkṛta te narendrā",
  "S04n487:53": "imāṃ carantena mi bodhicārikām |",
  "S04n487:54": "yāvanti co kāci jināna pūjā",
  "S04n487:55": "sarvā kṛtā etu samādhimeṣatā || 15 ||",
  "S04n487:56": "pratipattiya eṣa samādhi labhyate",
  "S04n487:57": "bahuprakārā pratipattiruktā |",
  "S04n487:58": "guṇeṣu sarveṣu pratiṣṭhitasya",
  "S04n487:59": "na durlabhastasya samādhireṣaḥ || 16 ||",
  "S04n487:60": "raseṣvagṛdhrasya alolupasya",
  "S04n487:61": "kuleṣvasaktasya anīrṣukasya |",
  "S04n487:62": "matrīvihārasya amatsarasya",
  "S04n487:63": "na durlabhastasya samādhireṣaḥ || 17 ||",
  "S04n487:64": "satkāralābheṣu anarthikasya",
  "S04n487:65": "ājīvaśuddhasya akiṃcanasya |",
  "S04n487:66": "viśuddhaśīlasya viśāradasya",
  "S04n487:67": "na durlabhastasya samādhireṣaḥ || 18 ||",
  "S04n487:68": "ārabdhavīryasya atandritasya",
  "S04n487:69": "raṇyādhimuktasya dhute sthitasya |",
  "S04n487:70": "nairātmyakṣāntīya pratiṣṭhitasya",
  "S04n487:71": "na durlabhastasya samādhireṣaḥ || 19 ||",
  "S04n487:72": "sudāntacittasya anuddhatasya",
  "S04n487:73": "īryāya caryāya pratiṣṭhitasya |",
  "S04n487:74": "tyāgādhimuktasya amatsarasya",
  "S04n487:75": "na durlabhastasya samādhireṣaḥ || 20 ||",
  "S04n487:76": "anuvyañjanalakṣaṇā buddhadharmā",
  "S04n487:77": "ye'ṣṭādaśā kīrtita nāyakena |",
  "S04n487:78": "balāviśāradya na tasya durlabhā",
  "S04n487:79": "dhāreti yaḥ śāntamimaṃ samādhim || 21 ||",
  "S04n487:80": "buddhena ye cakṣuṣa dṛṣṭa sattvā-",
  "S04n487:81": "sta ekakālasmi bhaveyu buddhāḥ |",
  "S04n487:82": "teṣaika ekasya bhaveyurāyuḥ",
  "S04n487:83": "acintiyākalpasahasrakoṭiyaḥ || 22 ||",
  "S04n487:84": "teṣaika ekasya śiro bhaveyuḥ",
  "S04n487:85": "sarvu samudreṣu yathaiva vālukāḥ |",
  "S04n487:86": "yāvanti te sarva śiro bhaveyuḥ",
  "S04n487:87": "śire śire jihva bhaveyu tāttikāḥ || 23 ||",
  "S04n487:88": "te tasya sarve bhaṇi ānuśaṃsā",
  "S04n487:89": "yo gātha dhāreyya itaḥ samādhitaḥ |",
  "S04n487:90": "na kiṃcimātraṃ parikīrtitaṃ bhavet",
  "S04n487:91": "kiṃ vā punaryo hi śikṣitva dhāraye || 24 ||",
  "S04n487:92": "dhūtān samādāya guṇāṃśca vartate",
  "S04n487:93": "spṛhenti devāsurayakṣaguhyakāḥ |",
  "S04n487:94": "rājāna bhonti anuyātru tasya",
  "S04n487:95": "dhāreti yaḥ śānta samādhi durlabham || 25 ||",
  "S04n487:96": "parigṛhīto bhavati jinebhi-",
  "S04n487:97": "rdevāśca nāgāḥ sada ānuyātrāḥ |",
  "S04n487:98": "pratyarthikāstasya śriya no sahanti",
  "S04n487:99": "dhāreti yaḥ śānta samādhi durlabham || 26 ||",
  "S04n487:100": "anantu tasya pratibhānu bhoti",
  "S04n487:101": "ananta sūtrāntasahasra bhāṣate |",
  "S04n487:102": "na tasya viṣṭhā nu kadāci bhoti",
  "S04n487:103": "dhāreti yaḥ śāntamimaṃ samādhim || 27 ||",
  "S04n487:104": "drakṣyanti buddhamamitābhu nāyakaṃ",
  "S04n487:105": "sukhāvatīṃ cāpyatha lokadhātum |",
  "S04n487:106": "ye paścime kāli mahābhayānake",
  "S04n487:107": "samādhi śrutvā imu dhārayeyuḥ || 28 ||",
  "S04n487:108": "prakāśayitvā imu ānuśaṃsā",
  "S04n487:109": "adhyeṣate śāstu svayaṃ svayaṃbhūḥ |",
  "S04n487:110": "parinirvṛtasya mama paścikāle",
  "S04n487:111": "samādhi dhāretha imaṃ viśuddham || 29 ||",
  "S04n487:112": "ye keci buddhā daśasu diśāsu",
  "S04n487:113": "atītakāle'pi ca pratyutpannāḥ |",
  "S04n487:114": "sarve jinā atra samādhiśikṣitā",
  "S04n487:115": "budhyanti bodhiṃ virajāmasaṃskṛtām || 30 ||",
  "S04n487:116": "iti śrīsamādhirāje śālendrarāja(pūrvayoga)",
  "S04n487:117": "parivarto nāma dvitīyaḥ ||"
}