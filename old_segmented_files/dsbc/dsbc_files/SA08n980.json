{
  "SA08n980:0": "atha tṛtīyam udānam",
  "SA08n980:1": "(karuṇā-dāna-śīlāni kṣāntirvīryamathāpi ca |",
  "SA08n980:2": "dhyānaṃ prajñā'tha nirvāṇo mano bhikṣuśca te daśa || )",
  "SA08n980:3": "(21) karuṇāvargaḥ",
  "SA08n980:4": "karuṇā māteva hitakāriṇī bhavati",
  "SA08n980:5": "kṛpā sarveṣu bhūteṣu māteva hitakāriṇī |",
  "SA08n980:6": "yāṃ samāśritya puruṣāḥ prayānti sukhamuttamam ||1 ||",
  "SA08n980:7": "dayānveṣīha puruṣaḥ sarvasattvahite rataḥ |",
  "SA08n980:8": "pūjanīyaḥ satāṃ yāti pretya svarge ca modate ||2 ||",
  "SA08n980:9": "dayāvantaḥ sadāvarta sarvabhūtahite ratam |",
  "SA08n980:10": "tamevaṃ puruṣaṃ nityaṃ praṇamanti divaukasaḥ ||3 ||",
  "SA08n980:11": "karuṇānvito devalokaṃ gacchati",
  "SA08n980:12": "prayāti devalokaṃ ca śīlavān karuṇānvitaḥ |",
  "SA08n980:13": "kṛpānvitaḥ sa puruṣo candramā iva śobhate ||4 ||",
  "SA08n980:14": "sukhārthinā karuṇā sevitavyā",
  "SA08n980:15": "āśrayanti ca bhūtāni gataśokā gatavyathā |",
  "SA08n980:16": "tasmād dayāprayatnena sevitavyā sukhārthinā ||5 ||",
  "SA08n980:17": "kāruṇyena yaśavṛddhirbhavati",
  "SA08n980:18": "yasya vāk kāyacitte (ca)",
  "SA08n980:19": "kāruṇyena vibhūṣite |",
  "SA08n980:20": "tasya mitramayā lokā bhavanti yaśasā vṛtāḥ ||6 ||",
  "SA08n980:21": "kāruṇyārdrasya viduṣo nirvāṇaṃ yāti",
  "SA08n980:22": "kāruṇyārdrasya viduṣo nityaṃ mṛdvindriyasya ca |",
  "SA08n980:23": "samyagdṛṣṭiprayatnasya nirvāṇaṃ nāti dūrataḥ ||7 ||",
  "SA08n980:24": "kāruṇyavibhūṣitā manuṣyalokaṃ devavad bhūṣayanti",
  "SA08n980:25": "manuṣyaloke te devā ye kāruṇyena vibhūṣitāḥ |",
  "SA08n980:26": "kāruṇyena daridrā ye te daridrāḥ satāṃ matāḥ ||8 ||",
  "SA08n980:27": "mṛdvāśayā martyāḥ sādhavaḥ",
  "SA08n980:28": "mṛdvāśayā hi ye martyāḥ sādhuvat kāñcanopamāḥ |",
  "SA08n980:29": "kāruṇyamakṣayaṃ yeṣāṃ sadā manasi vartate ||9 ||",
  "SA08n980:30": "ke dharmaparāyaṇā bhavanti?",
  "SA08n980:31": "te ca sattvāḥ sadodyuktā nityaṃ dharmaparāyaṇāḥ |",
  "SA08n980:32": "yeṣāṃ kāruṇyadīpena hṛdayaṃ samprakāśitam ||10 ||",
  "SA08n980:33": "na rātrau na divā teṣāṃ dharmo hi vinivartate |",
  "SA08n980:34": "yeṣāṃ sarvāsvavasthāsu karuṇābhirataṃ matam ||11 ||",
  "SA08n980:35": "kāruṇyaṃ śītalaṃ cittam",
  "SA08n980:36": "kāruṇyaśītalaṃ cittaṃ sarvasattvahite ratam |",
  "SA08n980:37": "bhuktvā saukhyaṃ nirupamaṃ paścād gacchati nirvṛtim ||12 ||",
  "SA08n980:38": "kāruṇyamavināśi dhanam",
  "SA08n980:39": "kāruṇyaṃ munibhiḥ śastaṃ kāruṇyaṃ nirmalaṃ saraḥ |",
  "SA08n980:40": "kāruṇyaṃ doṣanirghāti kāruṇyaṃ dhanamavyayam ||13 ||",
  "SA08n980:41": "guṇānāṃ bhūṣaṇaṃ cāgraṃ sarvadoṣavighātakam |",
  "SA08n980:42": "kāruṇyārdrā hi paramaṃ prayānti dhanamacyutam ||14 ||",
  "SA08n980:43": "kāruṇyaṃ (vai)",
  "SA08n980:44": "dhanaṃ yasmānmādhuryapayasā yutam |",
  "SA08n980:45": "na dāhaḥ krodhajastasya hṛdaye sampravartate ||15 ||",
  "SA08n980:46": "kāruṇyanāvamāruhya janā bhavasāgaraṃ taranti",
  "SA08n980:47": "kāruṇyanāvamāruhya prītirdhairyaparāyaṇaḥ |",
  "SA08n980:48": "tridoṣormimahāvege bhrāmyate bhavasāgare ||16 ||",
  "SA08n980:49": "karuṇāyāḥ paribhāṣā",
  "SA08n980:50": "guṇānāmadvayaṃ śreṣṭhaṃ vinā cittena bhūṣaṇam |",
  "SA08n980:51": "sādhūnāṃ dayitaṃ nityaṃ kāruṇyamiti kathyate ||17 ||",
  "SA08n980:52": "mārdavaṃ yasya hṛdaye vilīnamiva kāñcanam |",
  "SA08n980:53": "sa jano hi tu kalpānte duḥkhādāśu vimucyate ||18 ||",
  "SA08n980:54": "dayāloḥ śreyāṃsi rohanti",
  "SA08n980:55": "yasya pātrīkṛtaṃ cittaṃ mārdaveṇa samantataḥ |",
  "SA08n980:56": "śreyāṃsi tasya rohanti kedāra iva śālayaḥ ||19 ||",
  "SA08n980:57": "cetogṛhe nidhānaṃ tadavyayaṃ (sarva) dehinaḥ |",
  "SA08n980:58": "nirvāsayati dāridrayaṃ nṛṇāmadhyāśayaṃ mahat ||20 ||",
  "SA08n980:59": "tīkṣṇendriyasyāśāntasya nidhyānasya vicāriṇaḥ |",
  "SA08n980:60": "viṣayeṣu pramattasya duḥkhaṃ naiva pradhāvati ||21 ||",
  "SA08n980:61": "maitreṇa cetasā nityamanukampā-dayā parāḥ |",
  "SA08n980:62": "te hetuphalatattvajñā duḥkhapāśād vinirgatāḥ ||22 ||",
  "SA08n980:63": "na saṅkalpe mano yeṣāṃ ramate doṣavarjitam |",
  "SA08n980:64": "te doṣabhayanirmuktāḥ padaṃ gacchantyanuttaram ||23 ||",
  "SA08n980:65": "kṣāntikriyāsamāyukte mitravānakutobhayaḥ |",
  "SA08n980:66": "priyo bhavati loke'smin paścād deveṣu modate ||24 ||",
  "SA08n980:67": "dayāratnaṃ sadā sevyam",
  "SA08n980:68": "mātṛvat pitṛvaccaiva sarvalokasya te janāḥ |",
  "SA08n980:69": "dayāratnaṃ sadā yeṣāṃ manasi sthitamuttamam ||25 ||",
  "SA08n980:70": "kṛpaiva sukhasya mūlamasti",
  "SA08n980:71": "sukhasya ca paraṃ mūlaṃ kṛpaiva parikīrtitā |",
  "SA08n980:72": "(hṛdi ) yasya kṛpā nāsti sa duḥkhī parikīrtyate ||26 ||",
  "SA08n980:73": "maitrī eva sukhāvahā",
  "SA08n980:74": "ekasatyottaraṃ brahma ekasyānuttaraṃ śivam |",
  "SA08n980:75": "ekavidyā paraṃ mātā maitrī caikā sukhāvahā ||27 ||",
  "SA08n980:76": "ahiṃsakā eva dhanyāḥ",
  "SA08n980:77": "ahiṃsakāḥ sadā dhanyāḥ saddṛṣṭiḥ paramā śubhā |",
  "SA08n980:78": "etad ṛju sadā satyaṃ pāpānāṃ cāpi varjanam ||28 ||",
  "SA08n980:79": "karuṇāyā māhātmyam",
  "SA08n980:80": "karttavyaḥ puruṣaistasmāt kṛpāsaṃvegamānasaiḥ |",
  "SA08n980:81": "dāna-śīla-kṣamā-maitrī-jñānābhyāsaśca nirmalaḥ ||29 ||",
  "SA08n980:82": " ||iti karuṇāvarga ekaviṃśaḥ ||"
}