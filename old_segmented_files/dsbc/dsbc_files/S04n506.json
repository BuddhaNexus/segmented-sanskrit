{
  "S04n506:0": "pūrvayogaparivartaḥ |",
  "S04n506:1": "āsi pūrvamiha jambusāhvaye",
  "S04n506:2": "apramatta duvi śreṣṭhidārakau |",
  "S04n506:3": "pravrajitva sugatasya śāsane",
  "S04n506:4": "khaṅgabhūta vanaṣaṇḍamāśritau || 1 ||",
  "S04n506:5": "ṛddhimanta caturdhyānalābhinau",
  "S04n506:6": "kāvyaśāstrakuśalau suśikṣitau |",
  "S04n506:7": "antarikṣapadabhūmikovidau",
  "S04n506:8": "te asakta gagane vrajanti ca || 2 ||",
  "S04n506:9": "te ca tatra vanaṣaṇḍi śītale",
  "S04n506:10": "nānapuṣpabharite manorame |",
  "S04n506:11": "nānapakṣidvijasaṃghasevite",
  "S04n506:12": "anyamanya katha saṃprayojite || 3 ||",
  "S04n506:13": "tena rāja mṛgayā aṭantake",
  "S04n506:14": "śabda śrutva vanu taṃ upāgamī |",
  "S04n506:15": "dṛṣṭva pārthiva tatha dharmabhāṇakau",
  "S04n506:16": "teṣu prema paramaṃ upasthahi || 4 ||",
  "S04n506:17": "tehi sārdhu katha ānulomikīṃ",
  "S04n506:18": "kṛtva rāju purato niṣīdi so |",
  "S04n506:19": "tasya rājña balakāya nantako",
  "S04n506:20": "ṣaṣṭhikoṭiniyutānyupāgamī || 5 ||",
  "S04n506:21": "ekameku teṣu dharmabhāṇako",
  "S04n506:22": "rājamabravī śṛṇohi kṣatriyā |",
  "S04n506:23": "buddhapādu paramaṃ sudurlabho",
  "S04n506:24": "apramattu sada bhohi pārthiva || 6 ||",
  "S04n506:25": "āyu gacchati sadānavasthitaṃ",
  "S04n506:26": "girinadīya salileva śīghragam |",
  "S04n506:27": "vyādhiśokajarapīḍitasya te",
  "S04n506:28": "nāsti trāṇu yatha karma bhadrakam || 7 ||",
  "S04n506:29": "dharmapālu bhava rājakuñjarā",
  "S04n506:30": "rakṣimaṃ daśabalāna śāsanam |",
  "S04n506:31": "kṣīṇa kāli parame sudāruṇe",
  "S04n506:32": "dharmapakṣi sthihi rājakuñjara || 8 ||",
  "S04n506:33": "eva te bahuprakāra paṇḍitā",
  "S04n506:34": "ovadanti tada taṃ narādhipam |",
  "S04n506:35": "sārdhu ṣaṣṭaniyutehi pārthivo",
  "S04n506:36": "bodhicittamudapādayattadā || 9 ||",
  "S04n506:37": "śrutva dharma tada rājakuñjaraḥ",
  "S04n506:38": "sūratānakhilāna bhāṣato |",
  "S04n506:39": "prītijāta sumanā udagrako",
  "S04n506:40": "vandya pāda śirasāya prakramī || 10 ||",
  "S04n506:41": "tasya rājña bahavo'nyabhikṣavo",
  "S04n506:42": "lābhakāma praviśintu tat kulam |",
  "S04n506:43": "teṣa dṛṣṭa cariyā na tādṛśī",
  "S04n506:44": "teṣu rāja na tathā sagauravam || 11 ||",
  "S04n506:45": "tacca śāsanamatītaśāstukaṃ",
  "S04n506:46": "paścimaṃ ca tada varṣu vartate |",
  "S04n506:47": "jambudvīpi suparittabhājanā",
  "S04n506:48": "prādurbhūta bahavo asaṃyatāḥ || 12 ||",
  "S04n506:49": "utka lubdha bahu tatra bhikṣavo",
  "S04n506:50": "lābhakāma upalambhadṛṣṭikāḥ |",
  "S04n506:51": "vipranaṣṭa sugatasya śāsanād",
  "S04n506:52": "grāhayiṃsu bahulaṃ tadā nṛpam || 13 ||",
  "S04n506:53": "ghātayeti ubhi dharmabhāṇakau",
  "S04n506:54": "ye ucchedu pravadanti tīrthikāḥ |",
  "S04n506:55": "dīrghacārika samādapenti te",
  "S04n506:56": "nirvṛtīya na te kiṃci darśikā || 14 ||",
  "S04n506:57": "karma naśyati vipāku naśyati",
  "S04n506:58": "skandha nāstīti vadanti kuhakāḥ |",
  "S04n506:59": "tāṃ kṣipāhi viṣayātu pārthiva",
  "S04n506:60": "evameva ciru dharma sthāsyati || 15 ||",
  "S04n506:61": "śrutva teṣa vacanaṃ tadantaraṃ",
  "S04n506:62": "kāṅkṣa prāptu bhuta rājakuñjaraḥ |",
  "S04n506:63": "ghātayiṣyi amu dharmabhāṇakau",
  "S04n506:64": "mā upekṣitu anartha bheṣyati || 16 ||",
  "S04n506:65": "tasya rājña anubaddha devatā",
  "S04n506:66": "pūrvajāti sahacīrṇu cārikā |",
  "S04n506:67": "dīrgharā hitakāma paṇḍitā",
  "S04n506:68": "sā avoci tada rājapārthivam || 17 ||",
  "S04n506:69": "cittupāda ma janehi īdṛśaṃ",
  "S04n506:70": "pāpamitravacanena kṣatriyā |",
  "S04n506:71": "mā tva bhikṣu duvi dharmabhāṇakau",
  "S04n506:72": "pāpamitravacanena ghātaya || 18 ||",
  "S04n506:73": "na tva kiṃci smarasī narādhipa",
  "S04n506:74": "yatti tehi vanaṣaṇḍi bhāṣitam |",
  "S04n506:75": "kṣīṇakāli parame sudāruṇe",
  "S04n506:76": "dharmapakṣi sthihi rājakuñjara |",
  "S04n506:77": "rāja bhūtavacanena coditaḥ",
  "S04n506:78": "so na riñjati jināna śāsanam || 19 ||",
  "S04n506:79": "tasya rājña tada bhrāta dāruṇaḥ",
  "S04n506:80": "prātisīmiku sa tehi grāhitaḥ |",
  "S04n506:81": "eṣa deva tava bhrāta pāpako",
  "S04n506:82": "jīvitena na jātu nandate |",
  "S04n506:83": "tau ca bhikṣu duvi ghora vaidyakā",
  "S04n506:84": "te vrajanti gaganena vidyayā || 20 ||",
  "S04n506:85": "te sma śrutva tava mūlamāgatā",
  "S04n506:86": "sarvi bhūta tava vijñapematha |",
  "S04n506:87": "kṣipra ghātaya ghora vaidyakā",
  "S04n506:88": "mā ti paści anutāpu bheṣyati || 21 ||",
  "S04n506:89": "saṃnahitva tada rājakuñjaro",
  "S04n506:90": "pāpamitravacanena prasthitaḥ |",
  "S04n506:91": "sarvasainyaparivārito nṛpo",
  "S04n506:92": "yatra bhikṣu vani taṃ upāgato || 22 ||",
  "S04n506:93": "jñātva ghoramatidāruṇaṃ nṛpaṃ",
  "S04n506:94": "nāga yakṣa vani tatra ye sthitāḥ |",
  "S04n506:95": "iṣṭavarṣa tada tatra pātita",
  "S04n506:96": "tena rāja sahasenayā hato || 23 ||",
  "S04n506:97": "pāpamitravacanena paśyathā",
  "S04n506:98": "kālu kṛtva tada rāja dāruṇam |",
  "S04n506:99": "yena krodhu kṛtu dharmabhāṇake",
  "S04n506:100": "so avīci gatu ṣaṣṭijātiyo || 24 ||",
  "S04n506:101": "te'pi bhikṣu bahavopalambhikā",
  "S04n506:102": "yehi grāhitu rāja kṣatriyo |",
  "S04n506:103": "jātikoṭiśata apyacintiyo",
  "S04n506:104": "vedayiṃsu narakeṣu vedanām || 25 ||",
  "S04n506:105": "devatā yāya rāju codito",
  "S04n506:106": "yāya rakṣita dharmabhāṇakau |",
  "S04n506:107": "tāya buddha yatha gaṅgavālikā",
  "S04n506:108": "dṛṣṭva pūjita carantu cārikām || 26 ||",
  "S04n506:109": "ṣaṣṭikoṭiniyutā anūnakā",
  "S04n506:110": "yehi dharma śrutu sārdhu rājinā |",
  "S04n506:111": "yehi bodhivaracittu pāditaṃ",
  "S04n506:112": "buddha bhūyi pṛthulokadhātuṣu || 27 ||",
  "S04n506:113": "teṣu āyu bahukalpakoṭiyo",
  "S04n506:114": "teṣa jñānamatulamacintiyam |",
  "S04n506:115": "tehi sarvimu samādhi bhadrakaṃ",
  "S04n506:116": "deśayitva dvipadendu nirvṛtā || 28 ||",
  "S04n506:117": "etu śrutva vacanaṃ niruttaraṃ",
  "S04n506:118": "śīlabrahmaguṇajñānasaṃcayam |",
  "S04n506:119": "apramatta bhavathā atandritā",
  "S04n506:120": "buddhajñānamacireṇa lapsyathā || 29 ||",
  "S04n506:121": "drakṣyathā daśadiśe tathāgatān",
  "S04n506:122": "śāntacitta kṛpamaitralocanān |",
  "S04n506:123": "sarvalokaśaraṇaṃ parāyaṇaṃ",
  "S04n506:124": "dharmavarṣu jagi utsṛjiṣyathā || 30 ||",
  "S04n506:125": "iti śrīsamādhirāje pūrvayogaparivarto nāma ekaviṃśatitamaḥ ||"
}