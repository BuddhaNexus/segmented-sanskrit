{
  "SA07n922:0": "CANTO VIII",
  "SA07n922:1": "tatasturaṅgāvacaraḥ sa durmanā-",
  "SA07n922:2": "stathā vanaṃ bhartari nirmame gate |",
  "SA07n922:3": "cakāra yatnaṃ pathi śokanigrahe",
  "SA07n922:4": "tathāpi caivāśru na tasya cikṣiye ||1 ||",
  "SA07n922:5": "yamekarātreṇa tu bharturājñayā",
  "SA07n922:6": "jagāma mārga saha tena vājinā |",
  "SA07n922:7": "iyāya bharturvirahaṃ vicintayaṃ-",
  "SA07n922:8": "stameva panthānamahobhiraṣṭabhiḥ ||2 ||",
  "SA07n922:9": "hayaśca saujā vicacāra kanthaka-",
  "SA07n922:10": "statāma bhāvena babhūva nirmadaḥ |",
  "SA07n922:11": "alaṃkṛtaścāpi tathaiva bhūṣaṇai-",
  "SA07n922:12": "rabhūdgataśrīriva tena varjitaḥ ||3 ||",
  "SA07n922:13": "nivṛtya caivābhimukhastapovanaṃ",
  "SA07n922:14": "bhṛśaṃ jiheṣe karuṇaṃ muhurmuhuḥ |",
  "SA07n922:15": "kṣudhānvito'pyadhvani śaṣpamambu vā",
  "SA07n922:16": "yathā purā nābhinanda nādade ||4 ||",
  "SA07n922:17": "tato vihīnaṃ kapilāvhayaṃ puraṃ",
  "SA07n922:18": "mahātmanā tena jagaddhitātmanā |",
  "SA07n922:19": "krameṇa tau śūnyamivopajagmatu-",
  "SA07n922:20": "rdivākareṇeva vinākṛtaṃ nabhaḥ ||5 ||",
  "SA07n922:21": "sapuṇḍarīkairapi śobhitaṃ jalai-",
  "SA07n922:22": "ralaṃkṛtaṃ puṣpadharairnagairapi |",
  "SA07n922:23": "tadeva tasyopavanaṃ vanopamaṃ",
  "SA07n922:24": "gatapraharṣairna rarāja nāgaraiḥ ||6 ||",
  "SA07n922:25": "tato bhramadbhirdiśi dīnamānasai-",
  "SA07n922:26": "ranujjvalairbāṣpahatekṣaṇairnaraiḥ |",
  "SA07n922:27": "nirvāyamāṇāviva tāvubhau puraṃ",
  "SA07n922:28": "śanairapasnātamivābhijagmatuḥ ||7 ||",
  "SA07n922:29": "niśāmya ca srastaśarīragāminau",
  "SA07n922:30": "vināgatau śākyakularṣabheṇa tau |",
  "SA07n922:31": "mumoca bāṣpaṃ pathi nāgaro janaḥ",
  "SA07n922:32": "pura rathe dāśaratherivāgate ||8 ||",
  "SA07n922:33": "atha bruvantaḥ samupetamanyavo",
  "SA07n922:34": "janāḥ pathi cchandakamāgatāśravaḥ |",
  "SA07n922:35": "kva rājaputraḥ purarāṣṭranandano",
  "SA07n922:36": "hṛtastvayāsāviti pṛṣṭhato'nvayuḥ ||9 ||",
  "SA07n922:37": "tataḥ sa tān bhaktimato'bravījjanā-",
  "SA07n922:38": "nnarendraputraṃ na parityajāmyaham |",
  "SA07n922:39": "rudannahaṃ tena tu nirjane vane",
  "SA07n922:40": "gṛhasthaveśaśca visarjitāviti ||10 ||",
  "SA07n922:41": "idaṃ vacastasya niśamya te janāḥ",
  "SA07n922:42": "suduṣkaraṃ khalviti niścayaṃ yayuḥ |",
  "SA07n922:43": "pataddhi jahruḥ salilaṃ na netrajaṃ",
  "SA07n922:44": "mano nininduśca phalotthamātmanaḥ ||11 ||",
  "SA07n922:45": "athocuradyaiva viśāma tadvanaṃ",
  "SA07n922:46": "gataḥ sa yatra dviparājavikramaḥ |",
  "SA07n922:47": "jijīviṣā nāsti hi tena no vinā",
  "SA07n922:48": "yathendriyāṇāṃ vigame śarīriṇām ||12 ||",
  "SA07n922:49": "idaṃ puraṃ tena vivarjitaṃ vanaṃ",
  "SA07n922:50": "vanaṃ ca tattena samanvitaṃ puram |",
  "SA07n922:51": "na śobhate tena hi no vinā puraṃ",
  "SA07n922:52": "marutvatā vṛtravadhe yathā divam ||13 ||",
  "SA07n922:53": "punaḥ kumāro vinivṛtta ityatho",
  "SA07n922:54": "gavākṣamālāḥ pratipedire'ṅganāḥ |",
  "SA07n922:55": "viviktapṛṣṭhaṃ ca niśāmya vājinaṃ",
  "SA07n922:56": "punargavākṣāṇi pidhāya cukruśuḥ ||14 ||",
  "SA07n922:57": "praviṣṭadīkṣastu sutopalabdhaye",
  "SA07n922:58": "vratena śokena ca khinnamānasaḥ |",
  "SA07n922:59": "jajāpa devāyatane narādhipa-",
  "SA07n922:60": "ścakāra tāstāśca yathāśayāḥ kriyāḥ ||15 ||",
  "SA07n922:61": "tataḥ sa bāṣpapratipūrṇalocana-",
  "SA07n922:62": "sturaṅgamādāya turaṅgamānugaḥ |",
  "SA07n922:63": "viveśa śokābhihato nṛpakṣayaṃ",
  "SA07n922:64": "yudhāpinīte ripuṇeva bhartari ||16 ||",
  "SA07n922:65": "vigāhamānaśca narendramandiraṃ",
  "SA07n922:66": "vilokayannaśruvahena cakṣuṣā |",
  "SA07n922:67": "svareṇa puṣṭena rurāva kanthako",
  "SA07n922:68": "janāya duḥkhaṃ prativedayanniva ||17 ||",
  "SA07n922:69": "tataḥ khagāśca kṣayamadhyagocarāḥ",
  "SA07n922:70": "samīpabaddhāsturagāśca satkṛtāḥ |",
  "SA07n922:71": "hayasya tasya pratisasvanuḥ svanaṃ",
  "SA07n922:72": "narendrasūnorupayānaśaṅkinaḥ ||18 ||",
  "SA07n922:73": "janāśca harṣatiśayena vañcitā",
  "SA07n922:74": "janādhipāntaḥpurasaṃnikarṣagāḥ |",
  "SA07n922:75": "yathā hayaḥ kanthaka eṣa heṣate",
  "SA07n922:76": "dhruvaṃ kumāro viśatīti menire ||19 ||",
  "SA07n922:77": "atipraharṣādatha śokamūrchitāḥ",
  "SA07n922:78": "kumārasaṃdarśanalolalocanāḥ |",
  "SA07n922:79": "gṛhādviniścakramurāśayā striyaḥ",
  "SA07n922:80": "śaratpayodādiva vidyutaścalāḥ ||20 ||",
  "SA07n922:81": "vilambakeśyo malināṃśukāmbarā",
  "SA07n922:82": "nirañjanairbāṣpahatekṣaṇairmukhaiḥ |",
  "SA07n922:83": "striyo na rejurmṛjayā vinākṛtā",
  "SA07n922:84": "divīva tārā rajanīkṣayāruṇāḥ ||21 ||",
  "SA07n922:85": "araktatāmraiścaraṇairanūpurai-",
  "SA07n922:86": "rakuṇḍalairārjavakandharairmukhaiḥ |",
  "SA07n922:87": "svabhāvapīnairjaghanairamekhalai-",
  "SA07n922:88": "rahārayoktrairmuṣitairiva stanaiḥ ||22 ||",
  "SA07n922:89": "nirīkṣya tā bāṣpaparītalocanā",
  "SA07n922:90": "nirāśrayaṃ chandakamaśvameva ca |",
  "SA07n922:91": "viṣaṇṇavaktrā rurudurvarāṅganā",
  "SA07n922:92": "vanāntare gāva ivarṣabhojjhitāḥ ||23 ||",
  "SA07n922:93": "tataḥ sabāṣpā mahīṣī mahīpateḥ",
  "SA07n922:94": "pranaṣṭavatsā mahiṣīva vatsalā |",
  "SA07n922:95": "pragṛhya bāhū nipapāta gautamī",
  "SA07n922:96": "vilolaparṇā kadalīva kāñcanī ||24 ||",
  "SA07n922:97": "hatatviṣo'nyāḥ śithilāṃsabāhavaḥ",
  "SA07n922:98": "striyo viṣādena vicetanā iva |",
  "SA07n922:99": "na cukruśurnāśru jahurna śaśvasu-",
  "SA07n922:100": "rna celurāsurlikhitā iva sthitāḥ ||25 ||",
  "SA07n922:101": "adhīramanyāḥ patiśokamūrcchitā",
  "SA07n922:102": "vilocanaprasravaṇairmukhaiḥ striyaḥ |",
  "SA07n922:103": "siṣiñcire proṣitacandanān stanā-",
  "SA07n922:104": "ndharādharaḥ prasravaṇairivopalān ||26 ||",
  "SA07n922:105": "mukhaiśca tāsāṃ nāyanāmbutāḍitaiṃ",
  "SA07n922:106": "rarāja tadrājaniveśanaṃ tadā |",
  "SA07n922:107": "navāmbukāle'mbudavṛṣṭitāḍitaiḥ",
  "SA07n922:108": "sravajjalaistāmarasairyathā saraḥ ||27 ||",
  "SA07n922:109": "suvṛttapiṇāḍagulibhirnirantarai-",
  "SA07n922:110": "rabhūṣaṇairgūḍhasirairvarāṅganāḥ |",
  "SA07n922:111": "urāṃsi jaghnuḥ kamalopamaiḥ karaiḥ",
  "SA07n922:112": "svapallavairvātacalā latā iva ||28 ||",
  "SA07n922:113": "karaprahārapracalaiśca tā babhu-",
  "SA07n922:114": "stathāpi nāryaḥ sahitonnataiḥ stanaiḥ |",
  "SA07n922:115": "vanānilāghūrṇitapadmakampitai",
  "SA07n922:116": "rathāṅganāmnāṃ mithunairivāpagāḥ ||29 ||",
  "SA07n922:117": "yathā ca vakṣāṃsi karairapīḍayaṃ-",
  "SA07n922:118": "stathaiva vakṣobhirapīḍayan karān |",
  "SA07n922:119": "akārayaṃstatra parasparaṃ vyathāḥ",
  "SA07n922:120": "karāgravakṣāṃsyabalā dayālasāḥ ||30 ||",
  "SA07n922:121": "tatastu roṣapraviraktalocanā",
  "SA07n922:122": "viṣādasaṃbandhikaṣāyagadgadam |",
  "SA07n922:123": "uvāca niśvāsacalatpayodharā",
  "SA07n922:124": "vigāḍhaśokāśrudharā yaśodharā ||31 ||",
  "SA07n922:125": "niśi prasuptāmavaśāṃ vihāya māṃ",
  "SA07n922:126": "gataḥ kva sa chandaka manmanorathaḥ |",
  "SA07n922:127": "upāgate ca tvayi kanthake ca me",
  "SA07n922:128": "samaṃ gateṣu triṣu kampate manaḥ ||32 ||",
  "SA07n922:129": "anāryamasnigdhamamitrakarma me",
  "SA07n922:130": "nṛśaṃsa kṛtvā kimihādya rodiṣi |",
  "SA07n922:131": "niyaccha bāṣpaṃ bhava tuṣṭamānaso",
  "SA07n922:132": "na saṃvadatyaśru ca tacca karma te ||33 ||",
  "SA07n922:133": "priyeṇa vaśyena hitena sādhunā",
  "SA07n922:134": "tvayā sahāyena yathārthakāriṇā |",
  "SA07n922:135": "gato'ryaputro hyapunarnivṛttaye",
  "SA07n922:136": "ramasva diṣṭyā saphalaḥ śramastava ||34 ||",
  "SA07n922:137": "varaṃ manuṣyasya vicakṣaṇo ripu-",
  "SA07n922:138": "rna mitramaprājñamayogapeśalam |",
  "SA07n922:139": "suhṛdbruveṇa hyavipaścitā tvayā",
  "SA07n922:140": "kṛtaḥ kulasyāsya mahānupaplavaḥ ||35 ||",
  "SA07n922:141": "imā hi śocyā vyavamuktabhūṣaṇāḥ",
  "SA07n922:142": "prasaktabāṣpāvilaraktalocanāḥ |",
  "SA07n922:143": "sthite'pi patyau himavanmahīsame",
  "SA07n922:144": "pranaṣṭaśobhā vidhavā iva striyaḥ ||36 ||",
  "SA07n922:145": "imāśca vikṣiptaviṭaṅkabāhavaḥ",
  "SA07n922:146": "prasaktapārāvatadīrghanisvanāḥ |",
  "SA07n922:147": "vinākṛtāstena sahāvarodhanai-",
  "SA07n922:148": "rbhṛśaṃ rudantīva vimānapaṅktayaḥ ||37 ||",
  "SA07n922:149": "anarthakāmo'sya janasya sarvathā",
  "SA07n922:150": "turaṅgamo'pi dhruvameṣa kanthakaḥ |",
  "SA07n922:151": "jahāra sarvasvamitastathā hi me",
  "SA07n922:152": "jane prasupte niśi ratnacauravat ||38 ||",
  "SA07n922:153": "yadā samarthaḥ khalu soḍhumāgatā-",
  "SA07n922:154": "niṣuprahārānapi kiṃ punaḥ kaśāḥ |",
  "SA07n922:155": "gataḥ kaśāpātabhayātkathaṃ nvayaṃ",
  "SA07n922:156": "śriyaṃ gṛhītvā hṛdayaṃ ca me samam ||39 ||",
  "SA07n922:157": "anāryakarmā bhṛśamadya heṣate",
  "SA07n922:158": "narendradhiṣṇyaṃ pratipūrayanniva |",
  "SA07n922:159": "yadā tu nirvāhayati sma me priyaṃ",
  "SA07n922:160": "tadā hi mūkasturagādhamo'bhavat ||40 ||",
  "SA07n922:161": "yadi hyaheṣiṣyata bodhayan janaṃ",
  "SA07n922:162": "khuraiḥ kṣitau vāpyakariṣyata dhvanim |",
  "SA07n922:163": "hanusvanaṃ vājanayiṣyaduttamaṃ",
  "SA07n922:164": "na cābhaviṣyanmama duḥkhamīdṛśam ||41 ||",
  "SA07n922:165": "itīha devyāḥ paridevitāśrayaṃ",
  "SA07n922:166": "niśamya bāṣpagrathitākṣaraṃ vacaḥ |",
  "SA07n922:167": "adhomukhaḥ sāśrukalaḥ kṛtāñjaliḥ",
  "SA07n922:168": "śanairidaṃ chandaka uttaraṃ jagau ||42 ||",
  "SA07n922:169": "vigarhituṃ nārhasi devi kanthakaṃ",
  "SA07n922:170": "na cāpi roṣaṃ mayi kartumarhasi |",
  "SA07n922:171": "anāgasau svaḥ samavehi sarvaśo",
  "SA07n922:172": "gato nṛdevaḥ sa hi devi devavat ||43 ||",
  "SA07n922:173": "ahaṃ hi jānannapi rājaśāsanaṃ",
  "SA07n922:174": "balātkṛtaḥ kairapi daivatairiva |",
  "SA07n922:175": "upānayaṃ tūrṇamimaṃ turaṅgamaṃ",
  "SA07n922:176": "tathānvagacchaṃ vigataśramo'dhvani ||44 ||",
  "SA07n922:177": "vrajannayaṃ vajivaro'pi nāspṛśa-",
  "SA07n922:178": "nmahī khurāgrairvidhṛtairivāntarā |",
  "SA07n922:179": "tathaiva daivādiva saṃyatānano",
  "SA07n922:180": "hanusvanaṃ nākṛta nāpyaheṣata ||45 ||",
  "SA07n922:181": "yato bahirgacchati pārthivātmaje",
  "SA07n922:182": "tadābhavaddvāramapāvṛtaṃ svayam |",
  "SA07n922:183": "tamaśca naiśaṃ raviṇeva pāṭitaṃ",
  "SA07n922:184": "tapo'pi daivo vidhireṣa gṛhyatām ||46 ||",
  "SA07n922:185": "yadapramatto'pi narendraśāsanād",
  "SA07n922:186": "gṛhe pure civa sahasraśo janaḥ |",
  "SA07n922:187": "tadā sa nābudhyata nidrayā hṛta-",
  "SA07n922:188": "stato'pi daivo vidhireṣa gṛhyatām ||47 ||",
  "SA07n922:189": "yataśca vāso vanavāsasaṃmataṃ",
  "SA07n922:190": "nisṛṣṭamasmai samaye divaukasā |",
  "SA07n922:191": "divi praviddhaṃ mukuṭaṃ ca taddhṛtaṃ",
  "SA07n922:192": "tato'pi daivo vidhireṣa gṛhyatām ||48 ||",
  "SA07n922:193": "tadevamāvāṃ naradevi doṣato",
  "SA07n922:194": "na tatprayātaṃ prati gantumarhasi |",
  "SA07n922:195": "na kāmakāro mama nāsya vājinaḥ",
  "SA07n922:196": "kṛtānuyātraḥ sa hi daivatairgataḥ ||49 ||",
  "SA07n922:197": "iti prayāṇaṃ bahudevamadbhūtaṃ",
  "SA07n922:198": "niśamya tāstasya mahātmanaḥ striyaḥ |",
  "SA07n922:199": "pranaṣṭaśokā iva vismayaṃ yayu-",
  "SA07n922:200": "rmanojvaraṃ pravrajanāttu lebhire ||50 ||",
  "SA07n922:201": "viṣādapāriplavalocanā tataḥ",
  "SA07n922:202": "pranaṣṭapotā kurarīva duḥkhitā |",
  "SA07n922:203": "vihāya dhairya virurāva gautamī",
  "SA07n922:204": "tatāma caivāśrumukhī jagāda ca ||51 ||",
  "SA07n922:205": "mahormimanto mṛdavo'sitāḥ śubhāḥ",
  "SA07n922:206": "pṛthakpṛthaṅmūlaruhāḥ samudgatāḥ |",
  "SA07n922:207": "praveritāste bhuvi tasya murdhajā",
  "SA07n922:208": "narendramaulīpariveṣṭanakṣamāḥ ||52 ||",
  "SA07n922:209": "pralambabāhurmṛgarājavikramo",
  "SA07n922:210": "maharṣabhākṣaḥ kanakojjvaladyutiḥ |",
  "SA07n922:211": "viśālavakṣā ghanadundubhisvana-",
  "SA07n922:212": "stathāvidho'pyāśramavāsamarhati ||53 ||",
  "SA07n922:213": "abhāginī nūnamiyaṃ vasuṃdharā",
  "SA07n922:214": "tamāryakarmāṇamanuttamaṃ patim |",
  "SA07n922:215": "gatastato'sau guṇavān hi tādṛśo",
  "SA07n922:216": "nṛpaḥ prajābhāgyaguṇaiḥ prasūyate ||54 ||",
  "SA07n922:217": "sujātajālāvatatāṅgulī mṛdū",
  "SA07n922:218": "nigūḍhagulphau bisapuṣpakomalau |",
  "SA07n922:219": "vanāntabhūmiṃ kaṭhināṃ kathaṃ nu tau",
  "SA07n922:220": "sacakramadhyau caraṇau gamiṣyataḥ ||55 ||",
  "SA07n922:221": "vimānapṛṣṭhe śayanāsanocitaṃ",
  "SA07n922:222": "mahārhavastrāgurucandanārcitam |",
  "SA07n922:223": "kathaṃ nu śītoṣṇajalāgameṣu ta-",
  "SA07n922:224": "ccharīramojasvi vane bhaviṣyati ||56 ||",
  "SA07n922:225": "kulena sattvena balena varcasā",
  "SA07n922:226": "śrutena lakṣmyā vayasā ca garvitaḥ |",
  "SA07n922:227": "pradātumevābhyucito na yācituṃ",
  "SA07n922:228": "kathaṃ sa bhikṣāṃ parataścariṣyati ||57 ||",
  "SA07n922:229": "śucau śayitvā śayane hiraṇmaye",
  "SA07n922:230": "prabodhyamāno niśi tūryanisvanaiḥ |",
  "SA07n922:231": "kathaṃ bata svapsyati so'dya me vratī",
  "SA07n922:232": "paṭaikadeśāntarite mahītale ||58 ||",
  "SA07n922:233": "imaṃ pralāpaṃ karuṇaṃ niśamya tā",
  "SA07n922:234": "bhujaiḥ pariṣvajya parasparaṃ striyaḥ |",
  "SA07n922:235": "vilocanebhyaḥ salilāni tatyaju-",
  "SA07n922:236": "rmadhūni puṣpebhya iveritā latāḥ ||59 ||",
  "SA07n922:237": "tato dharāyāmapatadyaśodharā",
  "SA07n922:238": "vicakravākeva rathāṅgasāvhayā |",
  "SA07n922:239": "śanaiśca tattadvilalāpa viklavā",
  "SA07n922:240": "muhurmuhurgadgadaruddhayā girā ||60 ||",
  "SA07n922:241": "sa māmanāthāṃ sahadharmacāriṇī-",
  "SA07n922:242": "mapāsya dharma yadi kartumicchati |",
  "SA07n922:243": "kuto'sya dharmaḥ sahadharmacāriṇī",
  "SA07n922:244": "vinā tapo yaḥ paribhoktumicchati ||61 ||",
  "SA07n922:245": "śṛṇoti nūnaṃ sa na pūrvapārthivā-",
  "SA07n922:246": "nmahāsudarśaprabhṛtīn pitāmahān |",
  "SA07n922:247": "vanāni patnīsahitānupeyuṣa-",
  "SA07n922:248": "stathā hi dharma madṛte cikīrṣīte ||62 ||",
  "SA07n922:249": "makheṣu vā vedavidhānasaṃskṛtau",
  "SA07n922:250": "na daṃpatī paśyati dīkṣitābubhau |",
  "SA07n922:251": "samaṃ bubhukṣū parato'pi tatphalaṃ",
  "SA07n922:252": "tato'sya jāto mayi dharmamatsaraḥ ||63 ||",
  "SA07n922:253": "dhruvaṃ sa jānanmama dharmavallabho",
  "SA07n922:254": "manaḥ priyerṣyākalahaṃ muhurmithaḥ |",
  "SA07n922:255": "sukhaṃ vibhīrmāmapahāya roṣaṇāṃ",
  "SA07n922:256": "mahendraloke'psaraso jighṛkṣati ||64 ||",
  "SA07n922:257": "iyaṃ tu cintā mama kīdṛśaṃ nu tā",
  "SA07n922:258": "vapurguṇaṃ bibhrati tatra yoṣitaḥ |",
  "SA07n922:259": "vane yadartha sa tapāṃsi tapyate",
  "SA07n922:260": "śriyaṃ ca hitvā mama bhaktimeva ca ||65 ||",
  "SA07n922:261": "na khalviyaṃ svargasukhāya me spṛhā",
  "SA07n922:262": "na tajjanasyātmavato'pi durlabham |",
  "SA07n922:263": "sa tu priyo māmiha vā paratra vā",
  "SA07n922:264": "kathaṃ na jahyāditi me manorathaḥ ||66 ||",
  "SA07n922:265": "abhāginī yadyahamāyatekṣaṇaṃ",
  "SA07n922:266": "śucismitaṃ bharturudīkṣituṃ mukham |",
  "SA07n922:267": "na mandabhāgyo'rhati rāhulo'pyayaṃ",
  "SA07n922:268": "kadācidaṅke parivartituṃ pituḥ ||67 ||",
  "SA07n922:269": "aho nṛśaṃsaṃ sukumāravarcasaḥ",
  "SA07n922:270": "sudāruṇaṃ tasya manasvino manaḥ |",
  "SA07n922:271": "kalapralāpaṃ dviṣato'pi harṣaṇaṃ",
  "SA07n922:272": "śiśuṃ sutaṃ yastyajatīdṛśaṃ bata ||68 ||",
  "SA07n922:273": "mamāpi kāmaṃ hṛdayaṃ sudāruṇaṃ",
  "SA07n922:274": "śilāmayaṃ vāpyayaso'pi vā kṛtam |",
  "SA07n922:275": "anāthavacchrīrahite sukhocite",
  "SA07n922:276": "vanaṃ gate bhartari yanna dīryate ||69 ||",
  "SA07n922:277": "itīha devī patiśokamūrchitā",
  "SA07n922:278": "ruroda dadhyau vilalāpa cāsakṛt |",
  "SA07n922:279": "svabhāvadhīrāpi hi sā satī śucā",
  "SA07n922:280": "dhṛtiṃ na sasmāra cakāra no hriyam ||70 ||",
  "SA07n922:281": "tatastathā śokavilāpaviklavāṃ",
  "SA07n922:282": "yaśodharāṃ prekṣya vasuṃdharāgatām |",
  "SA07n922:283": "mahāravindairiva vṛṣṭitāḍitai-",
  "SA07n922:284": "rmukhaiḥ sabāṣpairvanitā vicukruśuḥ ||71 ||",
  "SA07n922:285": "samāptajāpyaḥ kṛtahomamaṅgalo",
  "SA07n922:286": "nṛpastu devāyatanādviniryayau |",
  "SA07n922:287": "janasya tejārtaraveṇa cāhata-",
  "SA07n922:288": "ścacāla vajradhvanineva vāraṇaḥ ||72 ||",
  "SA07n922:289": "niśāmya ca cchandakakanthakāvubhau",
  "SA07n922:290": "sutasya saṃśrutya ca niścayaṃ sthiram |",
  "SA07n922:291": "papāta śokābhihato mahīpatiḥ",
  "SA07n922:292": "śacīpatervṛtta ivotsave dhvajaḥ ||73 ||",
  "SA07n922:293": "tato muhūrta sutaśokamohito",
  "SA07n922:294": "janena tulyābhijanena dhāritaḥ |",
  "SA07n922:295": "nirīkṣya dṛṣṭyā jalapūrṇayā hayaṃ",
  "SA07n922:296": "mahītalastho vilalāpa pārthivaḥ ||74 ||",
  "SA07n922:297": "bahūni kṛtvā samare priyāṇi me",
  "SA07n922:298": "mahattvayā kanthaka vipriyaṃ kṛtam |",
  "SA07n922:299": "guṇapriyo yena vane sa me priyaḥ",
  "SA07n922:300": "priyo'pi sannapriyavatpraveritaḥ ||75 ||",
  "SA07n922:301": "tadadya māṃ vā naya tatra yatra sa",
  "SA07n922:302": "vraja drutaṃ vā punarenamānaya |",
  "SA07n922:303": "ṛte hi tasmānmama nāsti jīvitaṃ",
  "SA07n922:304": "vigāḍharogasya sadauṣadhādiva ||76 ||",
  "SA07n922:305": "suvarṇaniṣṭhīvini mṛtyunā hṛte",
  "SA07n922:306": "suduṣkaraṃ yanna mamāra saṃjayaḥ |",
  "SA07n922:307": "ahaṃ punardharmaratau sute gate",
  "SA07n922:308": "mumukṣurātmānamanātmavāniva ||77 ||",
  "SA07n922:309": "vibhordaśakṣatrakṛtaḥ prajāpateḥ",
  "SA07n922:310": "parāparajñasya vivasvadātmanaḥ |",
  "SA07n922:311": "priyeṇa putreṇa satā vinākṛtaṃ",
  "SA07n922:312": "kathaṃ na muhyeddhi mano manorapi ||78 ||",
  "SA07n922:313": "ajasya rājñastanayāya dhīmate",
  "SA07n922:314": "narādhipāyendrasakhāya me spṛhā |",
  "SA07n922:315": "gate vanaṃ yastanaye divaṃ gato",
  "SA07n922:316": "na moghabāṣpaḥ kṛpaṇaṃ jijīva ha ||79 ||",
  "SA07n922:317": "pracakṣva me bhadra tadāśramājiraṃ",
  "SA07n922:318": "hṛtastvayā yatra sa me jalāñjaliḥ |",
  "SA07n922:319": "ime parīpsanti hi taṃ pipāsavo",
  "SA07n922:320": "mamāsavaḥ pretagatiṃ yiyāsavaḥ ||80 ||",
  "SA07n922:321": "iti tanayaviyogajātaduḥkha",
  "SA07n922:322": "kṣitisadṛśaṃ sahajaṃ vihāya dhairyam |",
  "SA07n922:323": "daśaratha iva rāmaśokavaśyo",
  "SA07n922:324": "bahu vilalāpa nṛpo visaṃjñakalpaḥ ||81 ||",
  "SA07n922:325": "śrutavinayaguṇānvitastatastaṃ",
  "SA07n922:326": "matisacivaḥ pravayā purohitaśca |",
  "SA07n922:327": "samadhṛtamidamūcaturyathāva-",
  "SA07n922:328": "nna ca pariptamukhau na cāpyaśokau ||82 ||",
  "SA07n922:329": "tyaja naravara śokamehi dhairya",
  "SA07n922:330": "kudhṛtirivārhasi dhīra nāśru moktum |",
  "SA07n922:331": "srajamiva mṛditāmapāsya lakṣmīṃ",
  "SA07n922:332": "bhuvi bahavo hi nṛpā vanānyabhīyuḥ ||83 ||",
  "SA07n922:333": "api ca niyata eṣa tasya bhāvaḥ",
  "SA07n922:334": "smara vacanaṃ tadṛṣeḥ purāsitasya |",
  "SA07n922:335": "na hi sa divi na cakravartirājye",
  "SA07n922:336": "kṣaṇamapi vāsayituṃ sukhena śakyaḥ ||84 ||",
  "SA07n922:337": "yadi tu nṛvara kārya eva yatna-",
  "SA07n922:338": "stvaritamudāhara yāvadatra yāvaḥ |",
  "SA07n922:339": "bahuvidhimiha yuddhamastu tāva-",
  "SA07n922:340": "ttava tanayasya vidheśca tasya tasya ||85 ||",
  "SA07n922:341": "narapatiratha tau śaśāsa tasmād",
  "SA07n922:342": "drutamita eva yuvāmabhiprayātam |",
  "SA07n922:343": "na hi mama hṛdayaṃ prayāti śāntiṃ",
  "SA07n922:344": "vanaśakuneriva putralālasasya ||86 ||",
  "SA07n922:345": "paramamiti narendraśāsanāttau",
  "SA07n922:346": "yayaturamātyapurohitau vanaṃ tat |",
  "SA07n922:347": "kṛtamiti savadhūjanaḥ sadāro",
  "SA07n922:348": "nṛpatirapi pracakāra śeṣakāryam ||87 ||",
  "SA07n922:349": "iti buddhacarite mahākāvye'ntaḥpuravilāpo",
  "SA07n922:350": "nāmāṣṭamaḥ sargaḥ ||8 ||"
}