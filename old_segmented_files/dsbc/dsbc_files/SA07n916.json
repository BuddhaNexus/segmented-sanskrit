{
  "SA07n916:0": "CANTO II",
  "SA07n916:1": "ā janmano janmajarāntakasya",
  "SA07n916:2": "tasyātmajasyātmajitaḥ sa rājā |",
  "SA07n916:3": "ahanyahanyarthagajāśvamitrai-",
  "SA07n916:4": "rvṛddhiṃ yayau sindhurivāmbuvegaiḥ ||1 ||",
  "SA07n916:5": "dhanasya ratnasya ca tasya tasya",
  "SA07n916:6": "kṛtākṛtasyaiva ca kāñcanasya |",
  "SA07n916:7": "tadā hi naikānsa nidhīnavāpa",
  "SA07n916:8": "manorathasyāpyatibhārabhūtān ||2 ||",
  "SA07n916:9": "ye padmakalpairapi ca dvipendrai-",
  "SA07n916:10": "rna maṇḍalaṃ śakyamihābhinetum |",
  "SA07n916:11": "madotkaṭā haimavatā gajāste",
  "SA07n916:12": "vināpi yatnādupatasthurenam ||3 ||",
  "SA07n916:13": "nānāṅkacinhairnavahemabhāṇḍai-",
  "SA07n916:14": "rvibhūṣitairlambasaṭaistathānyaiḥ |",
  "SA07n916:15": "saṃcukṣubhe cāsya puraṃ turaṅgai-",
  "SA07n916:16": "rbalena maitryā ca dhanena cāptaiḥ ||4 ||",
  "SA07n916:17": "puṣṭāśca tuṣṭāśca tathāsya rājye",
  "SA07n916:18": "sādhvyo'rajaskā guṇavatpayaskāḥ |",
  "SA07n916:19": "udagravatsaiḥ sahitā babhūvu-",
  "SA07n916:20": "rbavhyo bahukṣīraduhaśca gāvaḥ ||5 ||",
  "SA07n916:21": "madhyasthatāṃ tasya ripurjagāma",
  "SA07n916:22": "madhyasthabhāvaḥ prayayau suhṛttvam |",
  "SA07n916:23": "viśeṣato dārḍhyamiyāya mitraṃ",
  "SA07n916:24": "dvāvasya pakṣāvaparastu nāsa ||6 ||",
  "SA07n916:25": "tathāsya mandānilameghaśabdaḥ",
  "SA07n916:26": "saudāminīkuṇḍalamaṇḍitābhraḥ |",
  "SA07n916:27": "vināśmavarṣāśanipātadoṣaiḥ",
  "SA07n916:28": "kāle ca deśe pravavarṣa devaḥ ||7 ||",
  "SA07n916:29": "ruroha sasyaṃ phalavadyathartu",
  "SA07n916:30": "tadākṛtenāpi kṛṣiśrameṇa |",
  "SA07n916:31": "tā eva cāsyauṣadhayo rasena",
  "SA07n916:32": "sāreṇa caivābhyadhikā babhūvuḥ ||8 ||",
  "SA07n916:33": "śarīrasaṃdehakare'pi kāle",
  "SA07n916:34": "saṃgrāmasaṃmarda iva pravṛte |",
  "SA07n916:35": "svasthāḥ sukhaṃ caiva nirāmayaṃ ca",
  "SA07n916:36": "prajajñire kālavaśena nāryaḥ ||9 ||",
  "SA07n916:37": "pṛthagvratibhyo vibhave'pi garhye",
  "SA07n916:38": "na prārthayanti sma narāḥ parebhyaḥ |",
  "SA07n916:39": "abhyarthitaḥ sūkṣmadhano'pi cārya-",
  "SA07n916:40": "stadā na kaścidvimukho babhūva ||10 ||",
  "SA07n916:41": "nāgauravo bandhuṣu nāpyadātā",
  "SA07n916:42": "naivāvrato nānṛtiko na hiṃsraḥ |",
  "SA07n916:43": "āsīttadā kaścana tasya rājye",
  "SA07n916:44": "rājño yayāteriva nāhuṣasya ||11 ||",
  "SA07n916:45": "udyānadevāyatanāśramāṇāṃ",
  "SA07n916:46": "kūpaprapāpuṣkariṇīvanānām |",
  "SA07n916:47": "cakruḥ kriyāstatra ca dharmakāmāḥ",
  "SA07n916:48": "pratyakṣataḥ svargīmavopalabhya ||12 ||",
  "SA07n916:49": "muktaśca durbhikṣabhayāmayebhyo",
  "SA07n916:50": "hṛṣṭo janaḥ svarga ivābhireme |",
  "SA07n916:51": "patnīṃ patirvā mahiṣī patiṃ vā",
  "SA07n916:52": "parasparaṃ na vyabhiceratuśca ||13 ||",
  "SA07n916:53": "kaścitsiṣeve rataye na kāmaṃ",
  "SA07n916:54": "kāmārthamarthaṃ na jugopa kaścit |",
  "SA07n916:55": "kaściddhanārthaṃ na cacāra dharma",
  "SA07n916:56": "dharmāya kaścinna cakāra hiṃsām ||14 ||",
  "SA07n916:57": "steyādibhiścāpyaribhiśca naṣṭaṃ",
  "SA07n916:58": "svasthaṃ svacakraṃ paracakramuktam |",
  "SA07n916:59": "kṣemaṃ subhikṣaṃ ca babhūva tasya",
  "SA07n916:60": "purānaraṇyasya yathaiva rāṣṭre ||15 ||",
  "SA07n916:61": "tadā hi tajjanmani tasya rājño",
  "SA07n916:62": "manorivādityasutasya rājye |",
  "SA07n916:63": "cacāra harṣaḥ praṇanāśa pāpmā",
  "SA07n916:64": "jajvāla dharmaḥ kaluṣaḥ śaśāma ||16 ||",
  "SA07n916:65": "evaṃvidhā rājakulasya saṃpa-",
  "SA07n916:66": "tsarvārthasiddhiśca yato babhūva |",
  "SA07n916:67": "tato nṛpastasya sutasya nāma",
  "SA07n916:68": "sarvārthasiddhi'yamiti pracakre ||17 ||",
  "SA07n916:69": "devī tu māyā vibudharṣikalpaṃ",
  "SA07n916:70": "dṛṣṭvā viśālaṃ tanayaprabhāvam |",
  "SA07n916:71": "jātaṃ praharṣa na śaśāka soḍhuṃ",
  "SA07n916:72": "tato nivāsāya divaṃ jagāma ||18 ||",
  "SA07n916:73": "tataḥ kumāraṃ suragarbhakalpaṃ",
  "SA07n916:74": "snehena bhāvena ca nirviśeṣam |",
  "SA07n916:75": "mātṛṣvasā mātṛsamaprabhāvā",
  "SA07n916:76": "saṃvardhayāmātmajavadbabhūva ||19 ||",
  "SA07n916:77": "tataḥ sa bālārka ivodayasthaḥ",
  "SA07n916:78": "samīrito vanhirivānilena |",
  "SA07n916:79": "krameṇa samyagvavṛdhe kumāra-",
  "SA07n916:80": "stārādhipaḥ pakṣa ivātamaske ||20 ||",
  "SA07n916:81": "tato mahārhāṇi ca candanāni",
  "SA07n916:82": "ratnāvalīścauṣadhibhiḥ sagarbhāḥ |",
  "SA07n916:83": "mṛgaprayuktān rathakāṃśca haimā-",
  "SA07n916:84": "nācakrire'smai suhṛdālayebhyaḥ ||21 ||",
  "SA07n916:85": "vayo'nurūpāṇi ca bhūṣaṇāni",
  "SA07n916:86": "hiraṇmayān hastimṛgāśvakāṃśca |",
  "SA07n916:87": "rathāṃśca goputrakasaṃprayuktān",
  "SA07n916:88": "putrīśca cāmīkararūpyacitrāḥ ||22 ||",
  "SA07n916:89": "evaṃ sa taistairviṣayopacārai-",
  "SA07n916:90": "rvayo'nurūpairupacaryamāṇaḥ |",
  "SA07n916:91": "bālo'pyabālapratimo babhūva",
  "SA07n916:92": "dhṛtyā ca śaucena dhiyā śriyā ca ||23 ||",
  "SA07n916:93": "vayaśca kaumāramatītya samyak",
  "SA07n916:94": "saṃprāpya kāle pratipattikarma |",
  "SA07n916:95": "alpairahobhirbahuvarṣagāmyā",
  "SA07n916:96": "jagrāha vidyāḥ svakulānurūpāḥ ||24 ||",
  "SA07n916:97": "naiḥśreyasaṃ tasya tu bhavyamarthaṃ",
  "SA07n916:98": "śrutvā purastādasitānmaharṣeḥ |",
  "SA07n916:99": "kāmeṣu saṅgaṃ janayāṃbabhūva",
  "SA07n916:100": "vanāni yāyāditi śākyarājaḥ ||25 ||",
  "SA07n916:101": "kulāttato'smai sthiraśīlayuktā-",
  "SA07n916:102": "tsādhvīṃ vapurhrīvinayopapannām |",
  "SA07n916:103": "yaśodharāṃ nāma yaśoviśālāṃ",
  "SA07n916:104": "vāmābhidhānāṃ śriyamājuhāva ||26 ||",
  "SA07n916:105": "vidyotamāno vapuṣā pareṇa",
  "SA07n916:106": "sanatkumārapratimaḥ kumāraḥ |",
  "SA07n916:107": "sārdha tayā śākyanarendravadhvā",
  "SA07n916:108": "śacyā sahasrākṣa ivābhireme ||27 ||",
  "SA07n916:109": "kiṃcinmanaḥkṣobhakaraṃ pratīpaṃ",
  "SA07n916:110": "kathaṃ na paśyediti so'nucintya |",
  "SA07n916:111": "vāsaṃ nṛpo vyādiśati sma tasmai",
  "SA07n916:112": "harmyodareṣveva na bhūpracāram ||28 ||",
  "SA07n916:113": "tataḥ śarattoyadapāṇḍareṣu",
  "SA07n916:114": "bhūmau vimāneṣviva rañjiteṣu |",
  "SA07n916:115": "harmyeṣu sarvartusukhāśrayeṣu",
  "SA07n916:116": "strīṇāmudārairvijahāra tūryaiḥ ||29 ||",
  "SA07n916:117": "kalairhi cāmīkarabaddhakakṣai-",
  "SA07n916:118": "rnārīkarāgrābhihatairmṛdaṅgaiḥ |",
  "SA07n916:119": "varāpsaronṛtyasamaiśca nṛtyaiḥ",
  "SA07n916:120": "kailāsavattadbhavanaṃ rarāja ||30 ||",
  "SA07n916:121": "vāgbhiḥ kalābhirlīlataiśca hāvai-",
  "SA07n916:122": "rmadaiḥ sakhelairmadhuraiśca hāsaiḥ |",
  "SA07n916:123": "taṃ tatra nāryo ramayāṃbabhūvu-",
  "SA07n916:124": "rbhūvañcitairardhīnarīkṣitaiśca ||31 ||",
  "SA07n916:125": "tataḥ sa kāmāśrayapaṇḍitābhiḥ",
  "SA07n916:126": "strībhirgṛhīto ratikarkaśābhiḥ |",
  "SA07n916:127": "vimānapṛṣṭhānna mahīṃ jagāma",
  "SA07n916:128": "vimānapṛṣṭhādiva puṇyakarmā ||32 ||",
  "SA07n916:129": "nṛpastu tasyaiva vivṛddhiheto-",
  "SA07n916:130": "stadbhāvinārthena ca codyamānaḥ |",
  "SA07n916:131": "śame'bhireme virarāma pāpā-",
  "SA07n916:132": "dbheje damaṃ saṃvibabhāja sādhūn ||33 ||",
  "SA07n916:133": "nādhīravatkāmasukhe sasañje",
  "SA07n916:134": "na saṃrarañje viṣamaṃ jananyām |",
  "SA07n916:135": "dhṛtyendriyāśvāṃścapalānvijigye",
  "SA07n916:136": "bandhūṃśca paurāṃśca guṇairjigāya ||34 ||",
  "SA07n916:137": "nādhyaiṣṭa duḥkhāya parasya vidyāṃ",
  "SA07n916:138": "jñānaṃ śivaṃ yattu tadadhyagīṣṭa |",
  "SA07n916:139": "svābhyaḥ prajābhyo hi yathā tathaiva",
  "SA07n916:140": "sarvaprajābhyaḥ śivamāśaśaṃse ||35 ||",
  "SA07n916:141": "bhaṃ bhāsuraṃ cāṅgirasādhidevaṃ",
  "SA07n916:142": "yathāvadānarca tadāyuṣe saḥ |",
  "SA07n916:143": "juhāva havyānyakṛśe kṛśānau",
  "SA07n916:144": "dadau dvijebhyaḥ kṛśanaṃ ca gāśca ||36 ||",
  "SA07n916:145": "sasnau śarīraṃ pavituṃ manaśca",
  "SA07n916:146": "tīrthāmbubhiścaiva guṇāmbubhiśca |",
  "SA07n916:147": "vedopadiṣṭaṃ samamātmajaṃ ca",
  "SA07n916:148": "somaṃ papau śāntisukhaṃ ca hārdam ||37 ||",
  "SA07n916:149": "sāntvaṃ babhāṣe na ca nārthavadya-",
  "SA07n916:150": "jjajalpa tattvaṃ na ca vipriyaṃ yat |",
  "SA07n916:151": "sāntvaṃ hyatattvaṃ paruṣaṃ ca tattvaṃ",
  "SA07n916:152": "hriyāśakannātmana eva vaktum ||38 ||",
  "SA07n916:153": "iṣṭeṣvaniṣṭeṣu ca kāryavatsu",
  "SA07n916:154": "na rāgadoṣāśrayatāṃ prapede |",
  "SA07n916:155": "śivaṃ siṣeve vyavahāraśuddhaṃ",
  "SA07n916:156": "yajñaṃ hi mene na tathā yathā tat ||39 ||",
  "SA07n916:157": "āśāvate cāhigatāya sadyo",
  "SA07n916:158": "deyāmbubhistarṣamacecchidiṣṭa |",
  "SA07n916:159": "yuddhādṛte vṛttaparaśvadhena",
  "SA07n916:160": "dviḍdarpamudvṛttamabebhidiṣṭa ||40 ||",
  "SA07n916:161": "ekaṃ vininye sa jugopa sapta",
  "SA07n916:162": "saptaiva tatyāja rarakṣa pañca |",
  "SA07n916:163": "prāpa trivarga bubudhe trivarga",
  "SA07n916:164": "jajñe dvivarga prajahau dvivargam ||41 ||",
  "SA07n916:165": "kṛtāgaso'pi pratipādya vadhyā-",
  "SA07n916:166": "nnājīghanannāpi ruṣā dadarśa |",
  "SA07n916:167": "babandha sāntvena phalena caitāṃ-",
  "SA07n916:168": "styāgo'pi teṣāṃ hyanayāya dṛṣṭaḥ ||42 ||",
  "SA07n916:169": "ārṣāṇyacārītparamavratāni",
  "SA07n916:170": "vairāṇyahāsīccirasaṃbhṛtāni |",
  "SA07n916:171": "yaśāṃsi cāpadguṇagandhavanti",
  "SA07n916:172": "rajāṃsyahārṣīnmalinīkarāṇi ||43 ||",
  "SA07n916:173": "na cājihīrṣidvalimapravṛttaṃ",
  "SA07n916:174": "na cācikīrṣitparavastvabhidhyām |",
  "SA07n916:175": "na cāvivakṣīd dviṣatāmadharma",
  "SA07n916:176": "na cāvivākṣīddhṛdayena manyum ||44 ||",
  "SA07n916:177": "tasmiṃstathā bhūmipatau pravṛtte",
  "SA07n916:178": "bhṛtyāśca paurāśca tathaiva ceruḥ |",
  "SA07n916:179": "śamātmake cetasi viprasanne",
  "SA07n916:180": "prayuktayogasya yathendriyāṇi ||45 ||",
  "SA07n916:181": "kāle tataścārupayodharāyāṃ",
  "SA07n916:182": "yaśodharāyāṃ svayaśodharāyām |",
  "SA07n916:183": "śauddhodane rāhusapatnavaktro",
  "SA07n916:184": "jajñe suto rāhula eva nāmnā ||46 ||",
  "SA07n916:185": "atheṣṭaputraḥ paramapratītaḥ",
  "SA07n916:186": "kulasya vṛddhiṃ prati bhūmipālaḥ |",
  "SA07n916:187": "yathaiva putraprasave nananda",
  "SA07n916:188": "tathaiva pautraprasave nananda ||47 ||",
  "SA07n916:189": "putrasya me putragato mameva",
  "SA07n916:190": "snehaḥ kathaṃ syāditi jātaharṣaḥ |",
  "SA07n916:191": "kāle sa taṃ taṃ vidhimālalambe",
  "SA07n916:192": "putrapriyaḥ svargamivārurukṣan ||48 ||",
  "SA07n916:193": "sthitvā pathi prāthamakalpikānāṃ",
  "SA07n916:194": "rājavarṣabhāṇāṃ yaśasānvitānām |",
  "SA07n916:195": "śuklānyamuktvāpi tapāṃsyatapta",
  "SA07n916:196": "yajñaiśca hiṃsārahitairayaṣṭa ||49 ||",
  "SA07n916:197": "ajājvaliṣṭātha sa puṇyakarmā",
  "SA07n916:198": "nṛpaśriyā caiva tapaḥśriyā ca |",
  "SA07n916:199": "kulena vṛttena dhiyā ca dīpta-",
  "SA07n916:200": "stejaḥ sahasrāṃśurivotsisṛkṣuḥ ||50 ||",
  "SA07n916:201": "svāyaṃbhuvaṃ cārcikamarcayitvā",
  "SA07n916:202": "jajāpa putrasthitaye sthitaśrīḥ |",
  "SA07n916:203": "cakāra karmāṇi ca duṣkarāṇi",
  "SA07n916:204": "prajāḥ sisṛkṣuḥ ka ivādikāle ||51 ||",
  "SA07n916:205": "tatyāja śastraṃ vimamarśa śāstraṃ",
  "SA07n916:206": "śamaṃ siṣeve niyamaṃ viṣehe |",
  "SA07n916:207": "vaśīva kaṃcidviṣayaṃ na bheje",
  "SA07n916:208": "piteva sarvānviṣayāndadarśa ||52 ||",
  "SA07n916:209": "babhāra rājyaṃ sa hi putrahetoḥ",
  "SA07n916:210": "putraṃ kulārthaṃ yaśase kulaṃ tu |",
  "SA07n916:211": "svargāya śabdaṃ divamātmaheto-",
  "SA07n916:212": "rdharmārthamātmasthitimācakāṅkṣa ||53 ||",
  "SA07n916:213": "evaṃ sa dharma vividhaṃ cakāra",
  "SA07n916:214": "sidbhirnipātaṃ śrutitaśca siddham |",
  "SA07n916:215": "dṛṣṭvā kathaṃ putramukhaṃ suto me",
  "SA07n916:216": "vanaṃ na yāyāditi nāthamānaḥ ||54 ||",
  "SA07n916:217": "rirakṣiṣantaḥ śriyamātmasaṃsthāṃ",
  "SA07n916:218": "rakṣanti putrān bhuvi bhūmipālāḥ |",
  "SA07n916:219": "putraṃ narendraḥ sa tu dharmakāmo",
  "SA07n916:220": "rarakṣa dharmādviṣayeṣu muñcan ||55 ||",
  "SA07n916:221": "vanamanupamasattvā bodhisattvāstu sarve",
  "SA07n916:222": "viṣayasukharasajñā jagmurutpannaputrāḥ |",
  "SA07n916:223": "ata upacitakarmā rūḍhamūle'pi hetau",
  "SA07n916:224": "sa ratimupasiṣeve bodhimāpanna yāvat ||56 ||",
  "SA07n916:225": "iti buddhacarite mahākāvye",
  "SA07n916:226": "antaḥpuravihāro nāma dvitīyaḥ sargaḥ ||2 ||"
}