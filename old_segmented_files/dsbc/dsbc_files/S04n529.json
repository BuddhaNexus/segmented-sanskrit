{
  "S04n529:0": "suvarṇaprabhāsasūtram",
  "S04n529:1": " || suvarṇaprabhāsottamasūtrendrarājaḥ ||",
  "S04n529:2": " || nidānaparivartaḥ ||",
  "S04n529:3": "om namaḥ śrīsarvabuddhabodhisattvebhyaḥ |",
  "S04n529:4": "om namaḥ śrībhagavatyai āryaprajñāpāramitāyai || tadyathā |",
  "S04n529:5": "om śrutismṛtigativijaye svāhā ||",
  "S04n529:6": "yasmin pāramitā daśottamaguṇāstaistairnayaiḥ sūcitāḥ",
  "S04n529:7": "sarvajñena jagaddhitāya daśa ca prakhyāpitā bhūmayaḥ |",
  "S04n529:8": "ucchedadhruvavarjitā ca vimalā proktā gatirmadhyamā",
  "S04n529:9": "tatsūtraṃ svarṇaprabhānigaditaṃ śṛṇvantu bodhyarthinaḥ ||",
  "S04n529:10": "śrutaṃ mayaikasamaye gṛdhrakūṭe tathāgataḥ ||",
  "S04n529:11": "vijahāra dharmadhātau gambhīre buddhagocare || 1 ||",
  "S04n529:12": "bodhisattvasamuccayayā mahākuladevatayā,",
  "S04n529:13": "sarasvatyā ca mahādevatayā,",
  "S04n529:14": "śriyā ca mahādevatayā,",
  "S04n529:15": "dṛḍhayā ca mahāpṛthivīdevatayā,",
  "S04n529:16": "hārītyā ca mahādevatayā,",
  "S04n529:17": "evaṃ pramukhābhirmahādevatābhiranekadevanāgayakṣarākṣasagandharvāsuragaruḍakinnaramahoragamanuṣyāmanuṣyaiḥ sārdham |",
  "S04n529:18": "athāyuṣmānānando bhagavantametadavocat |",
  "S04n529:19": "kiṃ tāsāṃ bhagavandharmavinayaṃ bhaviṣyatīti ?",
  "S04n529:20": "bhagavānāha gāthābhiḥ |",
  "S04n529:21": "bhāvanaṃ ca na duḥpṛcchayā virajaskaṃ samādhiṃ dharmasāraṃ pratiṣṭhitam |",
  "S04n529:22": "śuddheṣu virajaskeṣu bodhisattvottameṣu ca |",
  "S04n529:23": "nidānaṃ sūtrarājendraṃ svarṇaprabhāsottamamidam || 2 ||",
  "S04n529:24": "tato gambhīraśravaṇena gambhīravyupaparīkṣaṇena |",
  "S04n529:25": "dikṣu catasṛṣu buddhairadhiṣṭhānamadhiṣṭhitam || 3 ||",
  "S04n529:26": "akṣobhyarājaḥ pūrvasmindakṣiṇe ratnaketunā |",
  "S04n529:27": "paścimāyāmamitābha uttare dundubhisvaraḥ || 4 ||",
  "S04n529:28": "taṃ pravakṣyāmyadhiṣṭhānaṃ māṅgalyadeśanottamam |",
  "S04n529:29": "sarvapāpavināśārthaṃ sarvapāpakṣayaṃkaram || 5 ||",
  "S04n529:30": "sarvasaukhyapradātāraṃ sarvaduḥkhavināśanam |",
  "S04n529:31": "mūlaṃ sarvajñatattvasya sarvaśrīsamalaṅkṛtam || 6 ||",
  "S04n529:32": "upahatendriyā ye hi sattvā naṣṭā hatāyuṣaḥ |",
  "S04n529:33": "alakṣmyā pariviṣṭā hi devatāsu parāṅmukhāḥ || 7 ||",
  "S04n529:34": "kāntayā te janā dviṣṭāḥ kuṭumbādiṣvapadrutāḥ |",
  "S04n529:35": "parasparaviruddhā vā arthanāśairupadrutāḥ || 8 ||",
  "S04n529:36": "śokāyāseṣvanarthe ca bhaye vyasana eva ca |",
  "S04n529:37": "grahanakṣatrapīḍāyāṃ kākhordadāruṇagrahaiḥ || 9 ||",
  "S04n529:38": "pāpakaṃ paśyati svapnaṃ śokāyāsasamucchritam |",
  "S04n529:39": "tena ca snānaśucinā śrotavyaṃ sūtramuttamam || 10 ||",
  "S04n529:40": "śṛṇvanti ya idaṃ sūtraṃ gambhīraṃ buddhagocaram |",
  "S04n529:41": "prasannacittāḥ sumanasaḥ śucivastrairalaṅkṛtāḥ || 11 ||",
  "S04n529:42": "teṣāṃ sarve tathā nityamupasargāḥ sudāruṇāḥ |",
  "S04n529:43": "tejasā cāsya sūtrasya śāmyante sarvaprāṇinām || 12 ||",
  "S04n529:44": "svayaṃ te lokapālāśca sāmātyāḥ sagaṇeśvarāḥ |",
  "S04n529:45": "teṣāṃ rakṣāṃ kariṣyanti hyanekairyakṣakoṭibhiḥ || 13 ||",
  "S04n529:46": "sarasvatī mahādevī tathā nairañjanavāsinī |",
  "S04n529:47": "hārītī bhūtamātā ca dṛḍhā pṛthivīdevatā || 14 ||",
  "S04n529:48": "brahmendraistridaśendraiśca maharddhikinnareśvaraiḥ |",
  "S04n529:49": "garuḍendraistathā sārdhaṃ yakṣagandharvapannagaiḥ || 15 ||",
  "S04n529:50": "te ca tatropasaṃkramya sasainyabalavāhanāḥ |",
  "S04n529:51": "teṣāṃ rakṣāṃ kariṣyanti divārātrau samāhitāḥ || 16 ||",
  "S04n529:52": "idaṃ sūtraṃ prakāśiṣye gambhīraṃ buddhagocaram |",
  "S04n529:53": "rahasyaṃ sarvabuddhānāṃ durlabhaṃ kalpakoṭibhiḥ || 17 ||",
  "S04n529:54": "śṛṇvanti ya idaṃ sūtraṃ ye cānye śrāvayanti ca |",
  "S04n529:55": "ye kecidanumodante ye ca pūjāṃ karonti hi || 18 ||",
  "S04n529:56": "te pūjitā bhaviṣyanti hyanekaiḥ kalpakoṭibhiḥ |",
  "S04n529:57": "devanāgamanuṣyaiśca kinnarāsuraguhyakaiḥ || 19 ||",
  "S04n529:58": "puṇyaskandhamaparyantamasaṃkhyeyamacintitam |",
  "S04n529:59": "yatteṣāṃ prasṛtaṃ bhoti kṛtapuṇyāna prāṇinām || 20 ||",
  "S04n529:60": "pragṛhītā bhaviṣyanti sarvabuddhairdiśo daśa |",
  "S04n529:61": "gambhīracaritebhiśca bodhisattvaistathaiva ca || 21 ||",
  "S04n529:62": "caukṣacīvaraprāvṛtya sugandhajalapāvanaiḥ |",
  "S04n529:63": "maitrīcittaṃ samutthāpya pūjitavyamatandritaiḥ || 22 ||",
  "S04n529:64": "vipulaṃ vimalaṃ cittamātmānaṃ prakariṣyati |",
  "S04n529:65": "prasādayaṃśca cetāṃsi śṛṇudhvaṃ sūtramuttamam || 23 ||",
  "S04n529:66": "svāgataṃ ca manuṣyeṣu sulabdhaṃ manuṣaṃ phalam |",
  "S04n529:67": "sujīvitāśca jīvanti sūtraṃ śṛṇvanti ye tvidam || 24 ||",
  "S04n529:68": "uptakuśalamūlāste bahubuddhaprakāśitāḥ |",
  "S04n529:69": "yeṣāmidaṃ karṇapuṭe deśitaṃ saṃpraviśyatīti || 25 ||",
  "S04n529:70": "iti śrīsuvarṇaprabhāsottamasūtrendrarāje",
  "S04n529:71": "nidānaparivartto nāma prathamaḥ ||"
}