{
  "SA08n967:0": "(8) tṛṣṇāvargaḥ",
  "SA08n967:1": "tṛṣṇāgnireva narakabhūtaḥ",
  "SA08n967:2": "bhavotārāya tṛṣṇāgnirjvalanaḥ śīta ucyate |",
  "SA08n967:3": "narake nārake yo'gnistṛṣṇāgnistriṣu dhātuṣu ||1 ||",
  "SA08n967:4": "kalpabhūto hyayaṃ vahniḥ yo'yaṃ narakasambhavaḥ |",
  "SA08n967:5": "bahujvālākulo vahniḥ tṛṣṇāhetusamudbhavaḥ ||2 ||",
  "SA08n967:6": "karmakṣayād vimucyante narakāt pāpakāriṇaḥ |",
  "SA08n967:7": "triṣu dhātuṣu dahyante narāstṛṣṇāvaśānugāḥ ||3 ||",
  "SA08n967:8": "anādimati saṃsāre tṛṣṇāgniratibandhakaḥ |",
  "SA08n967:9": "tṛṣṇāgnirnarakaṃ tasmānnāgnirnarakasambhavaḥ ||4 ||",
  "SA08n967:10": "tṛṣṇāgniḥ śarīraṃ manaśca dahati",
  "SA08n967:11": "gātradāhaṃ paraṃ kuryānnārakeyo hutāśanaḥ |",
  "SA08n967:12": "śārīraṃ mānasaṃ dāhaṃ tṛṣṇāgniḥ kurute nṛṇām ||5 ||",
  "SA08n967:13": "tṛṣṇāgniḥ sāmānyāgninā viśiṣyate",
  "SA08n967:14": "tasmād viśiṣyate vahniḥ tṛṣṇāhetusamudbhavaḥ |",
  "SA08n967:15": "nārakeyo'samaścaiva tṛṣṇāgnirnitarāṃ smṛtaḥ ||6 ||",
  "SA08n967:16": "ayamagniḥ trikālasambhavaḥ",
  "SA08n967:17": "tristhānagaḥ trihetuśca trikarmaparidīpakaḥ |",
  "SA08n967:18": "trikālasambhavo jñeyastṛṣṇā'gniparakastathā ||7 ||",
  "SA08n967:19": "tṛṣṇāgniḥ sadaiva sarvatra dāhakaḥ",
  "SA08n967:20": "rāgāgnirdahyate svarge dveṣāgnistiryage tathā |",
  "SA08n967:21": "mohāgnirdahyate pāpe tṛṣṇāgniḥ sarvadā sthitaḥ ||8 ||",
  "SA08n967:22": "tṛṣṇāgneḥ svarūpa-nirūpaṇam",
  "SA08n967:23": "mānerṣyādhūmaviśikhaḥ saṅkalpe dhanasambhavaḥ |",
  "SA08n967:24": "lobhāgnirdahate lokaṃ nāgniḥ kāmasamudbhavaḥ ||9 ||",
  "SA08n967:25": "tṛṣṇāgnirviṣayasevanenaiva vardhate",
  "SA08n967:26": "lobhāśīviṣadaṣṭā ye teṣāṃ śarma na vidyate |",
  "SA08n967:27": "sevito bhāvito lobho bhūya evābhivardhate ||10 ||",
  "SA08n967:28": "lobhasamo ripurbhuvi nāsti",
  "SA08n967:29": "yathā yathendhanaṃ prāpyānalo vardhatyanekaśaḥ |",
  "SA08n967:30": "śakyaḥ pālayituṃ(vahni)",
  "SA08n967:31": "rlobhavahnirna(śakyate) ||11 ||",
  "SA08n967:32": "cakravad bhramate loko lobhena parivañcitaḥ |",
  "SA08n967:33": "anādinidhane loke nāsti lobhasamo ripuḥ ||12 ||",
  "SA08n967:34": "viśanti sāgarajale lobhena parivañcitāḥ |",
  "SA08n967:35": "śastrasaṅghātagahanaṃ yuddhaṃ saṃpraviśanti ca ||13 ||",
  "SA08n967:36": "lobhahetorhi bhūpālā nāśayanti parasparam |",
  "SA08n967:37": "śastrāsibhairavaprotā yuddhayante dhanatṛṣṇayā ||14 ||",
  "SA08n967:38": "tṛṣṇāviṣavinirmuktā lobhāṅgāravivarjitā |",
  "SA08n967:39": "samaloṣṭakāñcanā ye nirvāṇasyāntike hi te ||15 ||",
  "SA08n967:40": "lobhāgniḥ sarvāpekṣayā viṣamaḥ",
  "SA08n967:41": "atīvānupapannasya dhanalobhena dahyate |",
  "SA08n967:42": "na vahnirviṣamastatra lobhāgniryatra vartate ||16 ||",
  "SA08n967:43": "lobhaśāntiṃ vinā nirvāṇakathā vṛthā",
  "SA08n967:44": "lobhādhāraprayatnena hanyāt tān rabhasā budhaḥ |",
  "SA08n967:45": "anirvāpitalobhasya nirvāṇaṃ dūrataḥ sthitam ||17 ||",
  "SA08n967:46": "bhavasukhaparityāgī bhavajaṃ duḥkhaṃ nāpnoti",
  "SA08n967:47": "bhavābhilāṣiṇīṃ nāndīṃ nābhinandanti ye narāḥ |",
  "SA08n967:48": "na teṣāṃ bhavajaṃ duḥkhaṃ svapne samupavidyate ||18 ||",
  "SA08n967:49": "tṛṣṇābaddhān janān mṛtyuḥ śambūka iva karṣati",
  "SA08n967:50": "matsyān yathā jālabaddhān śambūkaḥ parikarṣati |",
  "SA08n967:51": "tṛṣṇābaddhāṃstathā sattvānmṛtyuḥ samupakarṣati ||19",
  "SA08n967:52": "tṛṣṇāviṣaṃ kutrāpi na muñcati",
  "SA08n967:53": "saviṣaiḥ sāyakairviddho mṛgo yatra (pra)dhāvati |",
  "SA08n967:54": "tatra tatra viṣaṃ yāti tathā tṛṣṇāviṣaṃ nṛṇām ||20 ||",
  "SA08n967:55": "pravāhapravahannadyā gatirgatya'nudhāvinī |",
  "SA08n967:56": "yathā nirdahate bālān śuṣkendhanamivānalaḥ ||21 ||",
  "SA08n967:57": "āpātaramyā(viṣayā)",
  "SA08n967:58": "vipākajvalanopamāḥ |",
  "SA08n967:59": "tasmāt tṛṣṇā vimoktavyā yadi saukhyaṃ hi rocate ||22 ||",
  "SA08n967:60": "yathā hi vaḍiśagrastā mīnā mṛtyuvaśānugāḥ |",
  "SA08n967:61": "tathā prataptā viṣayān paridhāvanti duḥkhitāḥ ||23 ||",
  "SA08n967:62": "tṛṣṇāgniḥ narakādapi mahān",
  "SA08n967:63": "narakaṃ nārakeyaṃ ca tṛṣṇānihitaṃ mahat |",
  "SA08n967:64": "patanti nidhanā martyāḥ paradāropajīvinaḥ ||24 ||",
  "SA08n967:65": "tṛṣṇāprerito munirapi duḥkhamanubhavati",
  "SA08n967:66": "na ceṣṭitamanopāpatṛṣṇayā prerito muniḥ |",
  "SA08n967:67": "ṣaḍindriyasamudbhūto viṣayendhanadāhakaḥ ||25 ||",
  "SA08n967:68": "devānapi tṛṣṇāgnirdahatyeva",
  "SA08n967:69": "tṛṣṇāgnirdahate devaṃ kāyāgnirna kathañcana |",
  "SA08n967:70": "sukhāvṛtāḥ sukharatāḥ sukhe(na)",
  "SA08n967:71": "parivañcitāḥ ||26 ||",
  "SA08n967:72": "tṛṣṇāparivañcitaḥ patanamapi nāvagacchati",
  "SA08n967:73": "patanaṃ nāvagacchanti tṛṣṇayā parivañcitāḥ |",
  "SA08n967:74": "jvālāmālākulaḥ sarvaḥ saṃsārastṛṣṇayā''vṛtaḥ ||27 ||",
  "SA08n967:75": "tṛṣṇāgninā vaśībhūtā janā gacchanti durgatim |",
  "SA08n967:76": "tṛṣṇāgnibhiḥ parivṛtaḥ suralokaḥ samantataḥ ||28 ||",
  "SA08n967:77": "tṛṣṇāgniḥ sadaiva vardhate",
  "SA08n967:78": "dahyate vivaśo raktaḥ kāmabhogavaśīkṛtaḥ |",
  "SA08n967:79": "yathā yathendhanaṃ prāpya jvalanaṃ saṃpravardhate ||29 ||",
  "SA08n967:80": "tathā tathā sukhaṃ prāpya tṛṣṇāgnirvardhate nṛṇām |",
  "SA08n967:81": "parivartayate puṃsaḥ kāṣṭhāgnirdāhadīpakaḥ ||30 ||",
  "SA08n967:82": "tṛṣṇāgnirdahate lokaṃ parihātuṃ na śakyate |",
  "SA08n967:83": "ye viśālāṃ nadīṃ tīrṇā saṅkalpakṛtabhairavīm ||31 ||",
  "SA08n967:84": "tṛṣṇāpāśaśūnyaḥ paramāṃ śāntimāpnoti",
  "SA08n967:85": "te gatāḥ paramāṃ śāntiṃ yān hi tṛṣṇā na bādhate |",
  "SA08n967:86": "tṛṣṇāpāśavimuktā ye saṅgadoṣavivarjitāḥ ||32 ||",
  "SA08n967:87": "nirmuktapāpakalmāṣā vītaśokā hi te budhāḥ |",
  "SA08n967:88": "kalpakoṭisahasrāṇi tṛṣṇayā vañcitā narāḥ ||33 ||",
  "SA08n967:89": "tṛṣṇayā vañcito lokastṛṣṇāmevopāste",
  "SA08n967:90": "(na)te tyajanti(viṣayān)",
  "SA08n967:91": "māyāmohavaśaṃgatāḥ |",
  "SA08n967:92": "tṛṣṇayā vañcito lokastṛṣṇāmevopasevate ||34 ||",
  "SA08n967:93": "lavaṇodaṃ tṛṣātoyaṃ yathā pibati nārikaḥ |",
  "SA08n967:94": "na tena (tuṣyati)",
  "SA08n967:95": "janturmuhuśca pariśuṣyati ||35 ||",
  "SA08n967:96": "duḥkhakarīṃ tṛṣṇāṃ na seveta",
  "SA08n967:97": "viṣayeṣveva tṛṣṇārtaśceṣṭate puruṣo'dhamaḥ |",
  "SA08n967:98": "tasmāt tṛṣṇāṃ na seveta sā hi tṛṣṇā durāsadā ||36 ||",
  "SA08n967:99": "tṛṣṇāvaśo naiva pramucyate",
  "SA08n967:100": "tṛṣṇāvaśo hi puruṣaḥ saṃsārānnaiva mucyate ||",
  "SA08n967:101": "anuttamāni saukhyāni bhuktvā deveṣu jantavaḥ ||37 ||",
  "SA08n967:102": "tṛṣṇāpāśavikṛṣṭāḥ narakaṃ patanti",
  "SA08n967:103": "tṛṣṇāpāśavikṛṣṭāste patanti narakaṃ punaḥ |",
  "SA08n967:104": "asvatantrādikalyāṇaṃ nityaduḥkhamayaṃ kaṭu ||38 ||",
  "SA08n967:105": "tṛṣṇayā kadāpi tuṣṭirna bhavati",
  "SA08n967:106": "tṛṣṇāyāḥ sevanānmuktaḥ sanmārgamadhigacchati |",
  "SA08n967:107": "satṛṣṇasya kutastuṣṭirviṣayeṣu bhaviṣyati ||39 ||",
  "SA08n967:108": "sā tṛptiryā vitṛṣṇasya vītaśokasya dehinaḥ |",
  "SA08n967:109": "evaṃ vitarkavihitāḥ pramādena ca vañcitāḥ ||40 ||",
  "SA08n967:110": "tṛṣṇayā devānapi narakaṃ yānti",
  "SA08n967:111": "tṛṣṇayāḥ toṣitā devāḥ patanti narakaṃ punaḥ |",
  "SA08n967:112": "viḍambaneyaṃ paramā yatsurā narakaṃ gatāḥ ||41 ||",
  "SA08n967:113": "krīḍakāḥ paramā bhūtvā kāmasya vaśamāgatāḥ |",
  "SA08n967:114": "na codvijanti saṃsārān prāṇinaścittamohitāḥ ||42 ||",
  "SA08n967:115": "tṛṣṇayā duḥkhataraṃ padamāpnoti",
  "SA08n967:116": "duḥkhād duḥkhataraṃ yānti tṛṣṇayā parivañcitāḥ |",
  "SA08n967:117": "yathā yathā sukhasyāptirvardhate jālinī tathā ||43 ||",
  "SA08n967:118": "jālinīvahnidagdhasya narakānupakarṣati |",
  "SA08n967:119": "satṛṣṇasya vitarkā ye teṣāṃ saṃkhyā na vidyate ||44 ||",
  "SA08n967:120": "viṣayagāminaḥ tṛṣṇayā mṛtyumukhameva praviśanti",
  "SA08n967:121": "avitarkavitarkantu mṛtyurājo vikarṣati |",
  "SA08n967:122": "vitarkakāmavaśagāstṛṣṇāviṣayagāminaḥ ||45 ||",
  "SA08n967:123": "kāmāsvādapramattāḥ viṣayiṇo duḥkhinastiṣṭhanti",
  "SA08n967:124": "sukhasya bhoginaṃ dṛṣṭvā na vidvadbhistatheṣyate |",
  "SA08n967:125": "kāmāsvādapramattānāṃ prāṇināṃ viṣayārthinām ||46 ||",
  "SA08n967:126": "dehinaḥ tṛṣṇayā dahayante",
  "SA08n967:127": "jālinī bādhate nityaṃ yathā badhnanti dehinaḥ |",
  "SA08n967:128": "pañcālambanametattu tṛṣṇayā naiva dahayate ||47 ||",
  "SA08n967:129": "tṛṣṇāvimuktā vimalā bhavanti",
  "SA08n967:130": "tṛṣṇāvimuktavimalā na pāpapuragāminaḥ |",
  "SA08n967:131": "saṅkalpadoṣā kuṭilā tridoṣarajasodbhavāḥ ||48 ||",
  "SA08n967:132": "tṛṣṇayā saṃsārasāgare parivarte patanti janāḥ",
  "SA08n967:133": "pramādajalagambhīrāḥ strīrāgakṛtasevanāḥ |",
  "SA08n967:134": "gītatūryasvarāḥ śīghraṃ surāpānācca cañcalāḥ ||49 ||",
  "SA08n967:135": "sañchannaviṣayā sarve manaḥ kṣiptataraṅgiṇaḥ |",
  "SA08n967:136": "tṛṣṇānadīṣu viṣame vahanti na ca gocare ||50 ||",
  "SA08n967:137": "gāhante te ca sammūḍhāḥ surā rāgeṇa vañcitāḥ |",
  "SA08n967:138": "tridoṣakāṣṭhasaṃbhūtāḥ pramādānilavegataḥ ||51 ||",
  "SA08n967:139": "tṛṣṇānalaḥ suragaṇān dahate na ca te viduḥ |",
  "SA08n967:140": "na kṣaṇo nāpi hi lavo na muhūrta kathañcana ||52 ||",
  "SA08n967:141": "yā na tṛṣṇāvaśagataiḥ suraiḥ samupabhujyate |",
  "SA08n967:142": "tṛṣṇābhūmiriyaṃ kāṣṭhā vitarkajalasambhṛtā ||53 ||",
  "SA08n967:143": "tṛṣṇāsarpadagdhaḥ kālavaśīkṛto bhavati",
  "SA08n967:144": "yasmin krīḍanti vivaśāḥ devāḥ kāmavaśānugāḥ |",
  "SA08n967:145": "cittādinā pracaṇḍena tṛṣṇāviṣavisarpiṇā ||54 ||",
  "SA08n967:146": "daṣṭānupañcaśīrṣeṇa kiṃ vṛthā vilapasyatha |",
  "SA08n967:147": "tṛṣṇānadī viśāleyaṃ pañcatīrthasamudbhavā ||55 ||",
  "SA08n967:148": "tṛṣṇāmohendrajālena viprakīrṇena sarvadā |",
  "SA08n967:149": "tathā prapañcitā devā yathā na śubhabhāginaḥ ||56 ||",
  "SA08n967:150": "tṛṣṇāviṣayaghṛtasikto vardhata eva",
  "SA08n967:151": "nendriyāṇi sadā kāmaistṛpyanti hi kathañcana |",
  "SA08n967:152": "saṃvardhate tathā tṛṣṇā ghṛtasikto yathā'nalaḥ ||57 ||",
  "SA08n967:153": "tṛṣṇayā vividhāsu yoniṣu janāḥ bhramanti",
  "SA08n967:154": "nānāvidhaiḥ sukhaireṣā jālinī lokanāśinī |",
  "SA08n967:155": "narakapretatiryakṣu bhrāmayantī narān sadā ||58 ||",
  "SA08n967:156": "vītatṛṣṇaḥ nirmuktabandhanaḥ paramāṃ gatimāpnoti",
  "SA08n967:157": "mṛtyūpapattidolāyāṃ śliṣyante bāliśāḥ janāḥ |",
  "SA08n967:158": "suśīlāvītatṛṣṇāśca gatāste paramāṃ gatim ||59 ||",
  "SA08n967:159": "nirmuktabandhanā dhīrā gataśokā gatavyathāḥ |",
  "SA08n967:160": "sukhaṃ prāpnuvanti nityaṃ ye na tṛṣṇāvaśānugāḥ |",
  "SA08n967:161": "janmaduḥkhamayaiḥ pāśairna te vidhyanti sūrayaḥ ||60 ||",
  "SA08n967:162": "tṛṣṇāvisṛṣṭiḥ jñānāya pravartayati",
  "SA08n967:163": "yeṣāṃ sarvāsvavasthāsu jñāneṣu vihitaṃ manaḥ |",
  "SA08n967:164": "animitte mano yeṣāṃ visṛṣṭā ye ca tṛṣṇayā |",
  "SA08n967:165": "te vītamalakāntārāḥ pāraṃ prāptāḥ sukhodayam ||61 ||",
  "SA08n967:166": "tṛṣṇāmohapramattāḥ bhave bhave bhramanti",
  "SA08n967:167": "tṛṣṇāmohapramattā ye ratisaukhyāstathaiva ca |",
  "SA08n967:168": "mohitāste devagaṇā bhramiṣyanti bhave bhave ||62 ||",
  "SA08n967:169": "aharniśaṃ tṛṣṇā tāpayati",
  "SA08n967:170": "kuṭṭanavyavahārā ye paricittāpahāriṇaḥ |",
  "SA08n967:171": "avidyābahulā ye vā nityaṃ dāhābhikāṅkṣiṇaḥ |",
  "SA08n967:172": "na rātrau na divā teṣāṃ hṛdayaṃ suprasīdati ||63 ||",
  "SA08n967:173": "lobhābhibhūtāḥ tuṣāgnikalpā bhavanti",
  "SA08n967:174": "lobhābhibhūtamanasāṃ parivittābhikāṅkṣiṇām |",
  "SA08n967:175": "teṣāṃ tuṣāgnikalpānāṃ viśvasenna svabhāvataḥ ||64 ||",
  "SA08n967:176": "viṣayendhana sarpād bhayamevocitam",
  "SA08n967:177": "bibheti hi naraḥ sarvaḥ sarpādiva viṣendhanāt |",
  "SA08n967:178": "lobhena viṣayeṇaivā'bhibhūtāste narā bhṛśam ||65 ||",
  "SA08n967:179": "tṛṣṇāvaśagāḥ vividhāṃ yoniṃ labhante",
  "SA08n967:180": "te mṛtā narakaṃ yānti pretayoniṃ tathaiva ca |",
  "SA08n967:181": "tasmādapi vinirmuktā narakād vahnisammukhāt ||66 ||",
  "SA08n967:182": "ākāṅkṣiṇaḥ nityaṃ duḥkhabhāgino bhavanti",
  "SA08n967:183": "pañcajanmaśatānyete bhavanti parikāṅkṣiṇaḥ |",
  "SA08n967:184": "vivarṇā dīnavadanā nityaṃ duḥkhasya bhāginaḥ |",
  "SA08n967:185": "bhavanti manujāḥ sarve lobhopahatacetasaḥ ||67 ||",
  "SA08n967:186": "vivekasampannāḥ paramāṃ gatiṃ labhante",
  "SA08n967:187": "prahīṇalobhā ye santi nityaṃ jñānābhikāṅkṣiṇaḥ |",
  "SA08n967:188": "buddhimantaḥ sadā santaḥ te gatāḥ paramāṃ gatim |",
  "SA08n967:189": "nirvāṇahṛdayā vītalobhamohāḥ sadā narāḥ ||68 ||",
  "SA08n967:190": "lobhākṛṣṭasya vinipātaḥ",
  "SA08n967:191": "lobhāśīviṣadaṣṭasya vinipāto dhruvaṃ sthitaḥ |",
  "SA08n967:192": "kriyamāṇo dhruvaṃ loko vardhate sa muhurmuhuḥ ||69 ||",
  "SA08n967:193": "śuṣkendhanaṃ samādāya yathā vahniḥ pravardhate |",
  "SA08n967:194": "dhanatṛṣṇāratāḥ sattvāḥ dhanopārjanatatparāḥ ||70 ||",
  "SA08n967:195": "mṛtyukāle samutpanne tyajanti vivaśā dhanam |",
  "SA08n967:196": "yacca tatsambhavaṃ yogāt tat sarva na vinaśyati ||71 ||",
  "SA08n967:197": "lobhātmā ghoraṃ narakaṃ yāti",
  "SA08n967:198": "tena vittena lobhātmā nīyate narakaṃ bhṛśam |",
  "SA08n967:199": "anyaistadbhujyate vittaṃ sa tu pāpena lipyate ||72 ||",
  "SA08n967:200": "prayānti narakaṃ ghoraṃ paścāttāpena dahyate |",
  "SA08n967:201": "anartho hyartharūpeṇa sukharūpeṇa vā sukham ||73 ||",
  "SA08n967:202": "lobhatyāgaṃ prājñaḥ kuryāt",
  "SA08n967:203": "amitraṃ mitrarūpeṇa lobho'yaṃ hṛdi vartate |",
  "SA08n967:204": "na lobhaṃ saṃśrayet prājño lobhāgnirdahyate sadā ||74 ||",
  "SA08n967:205": "lobhadagdhāḥ narakagāmino bhavanti",
  "SA08n967:206": "tena dagdhā bhṛśaṃ sattvāḥ paścānnarakagāminaḥ |",
  "SA08n967:207": "lokasādhāraṇā hyete vibhavāḥ sukhavarjitāḥ ||75 ||",
  "SA08n967:208": "tṛṣṇābhayavimuktireva śreyaskarī",
  "SA08n967:209": "teṣāmarthe kathaṃ pāpa kriyate mandabuddhibhiḥ |",
  "SA08n967:210": "tṛṣṇābhayavimuktasya nirāśasya hi sarvataḥ ||76 ||",
  "SA08n967:211": "vītakāṅkṣasya dhīrasya nityaṃ padamavasthitam |",
  "SA08n967:212": "sampattau dhābate loko vipattau nāvabudhyate ||77 ||",
  "SA08n967:213": "sampattiḥ kṣayāntā",
  "SA08n967:214": "vipadantā hi sampattiḥ kṣayāntaṃ divasaṃ yathā |",
  "SA08n967:215": "yathā tiṣṭhati sampattiḥ vipattiḥ pāpikā tathā ||78 ||",
  "SA08n967:216": "kāmabhogairdevā api narakaṃ yānti",
  "SA08n967:217": "avitṛptasya kāmebhyastṛṣṇayā paridahyate |",
  "SA08n967:218": "yasyeṣṭāḥ sampado nityaṃ sukhaṃ cābhimataṃ sadā ||79 ||",
  "SA08n967:219": "jani nāśayate tāsāṃ tṛṣṇā naṣṭā sukhāvahā |",
  "SA08n967:220": "te devā narakaṃ yānti kāmabhogaistathārpitāḥ ||80 ||",
  "SA08n967:221": "analāceṣṭitaṃ sarva tad vadanti tathāgatāḥ |",
  "SA08n967:222": "manuṣyā yacca narakaṃ prayā(nti)",
  "SA08n967:223": "śataśastathā ||81 ||",
  "SA08n967:224": "vimugdhāḥ yati jīvanaṃ nāvagacchanti",
  "SA08n967:225": "ceṣṭitaṃ tad viśālāyāḥ yoṣikāyā vidurbudhāḥ |",
  "SA08n967:226": "vimohitā na vindanti tvaritaṃ svalpajīvitam |82 ||",
  "SA08n967:227": "tṛṣṇayā sukṛtāni vinaśyanti",
  "SA08n967:228": "sukṛtāni ca naśyanti tṛṣṇā naiva vinaśyati |",
  "SA08n967:229": "bhave bhave gatā satvāḥ na vindanti śubhāśubham ||83 ||",
  "SA08n967:230": "śubhasya phalameveṣṭaṃ yat surāḥ paribhuñjate |",
  "SA08n967:231": "aśubhasya tathā dṛṣṭamasukhaṃ vinipātajam ||84 ||",
  "SA08n967:232": "śubhāśubhaprahīṇā eva jarāmaraṇarahitā bhavanti",
  "SA08n967:233": "śubhāśubhaprahīṇā ye saṅgadoṣavivarjitāḥ |",
  "SA08n967:234": "te gatāḥ paramaṃ sthānaṃ jarāmaraṇavarjitam ||85 ||",
  "SA08n967:235": "tṛṣṇānadīparikṣiptaḥ janaḥ kimapi nāvagacchati",
  "SA08n967:236": "pañcāraṃ bhavacakraṃ tat tṛṣṇānābhipuraḥsaram |",
  "SA08n967:237": "nadīrāgaparikṣiptaṃ na ca loko'vabudhyate ||86 ||",
  "SA08n967:238": "doṣāvartatarā jñeyā saṅkalpamakarākulāḥ |",
  "SA08n967:239": "tṛṣṇānadī viśāleyaṃ na ca loko'vabudhyate ||87 ||",
  "SA08n967:240": "tṛṣṇā triṣu kāleṣu vañcikā",
  "SA08n967:241": "trikāle vañcanī tṛṣṇā nityamajñānakāriṇī |",
  "SA08n967:242": "na tasyāṃ viśvased dhīmān saṃsārabandhanā hi sā ||88 ||",
  "SA08n967:243": "tṛṣṇā lokabandhanabhūtā",
  "SA08n967:244": "mitravad dṛśyate kāle śatruvacca nikṛntati |",
  "SA08n967:245": "na tasyāṃ viśvaset prājñaḥ sā hi lokasya bandhanam ||89 ||",
  "SA08n967:246": "śakyaṃ hi bandhanaṃ chettumāyasaṃ dāruvattathā |",
  "SA08n967:247": "na tṛṣṇābandhanaṃ chettuṃ nityaṃ kāmagaveṣibhiḥ ||90 ||",
  "SA08n967:248": "yasyeṣṭo bandhabhedo'yaṃ yasyeṣṭaṃ sukhamavyayam |",
  "SA08n967:249": "sa tṛṣṇayā vimuktaḥ (syāt)",
  "SA08n967:250": "prajñāśo (dhanakṛd) bhavet ||91 ||",
  "SA08n967:251": "jñānena tṛṣṇāvṛkṣasya chedanaṃ karttavyam",
  "SA08n967:252": "jñānālokaḥ sukhāloko duḥkhaṃ tṛṣṇātamaḥsmṛtam |",
  "SA08n967:253": "tasmādālokamāsthāya tamo nudati paṇḍitaḥ ||92 ||",
  "SA08n967:254": "jñānakhaḍgena tīkṣṇena tṛṣṇāvṛkṣaṃ nikṛntati |",
  "SA08n967:255": "nikṛttavṛkṣaḥ (sa)",
  "SA08n967:256": "naraḥ sukhaṃ prāpnotyanuttamam ||93 ||",
  "SA08n967:257": "doṣeṇa bahulā hyeṣā nadī prasravaṇākulā |",
  "SA08n967:258": "doṣā netānahitvā ( na)",
  "SA08n967:259": "bhavānmuñcati paṇḍitaḥ ||94 ||",
  "SA08n967:260": "prajñānāvamāśritya tṛṣṇānadyāḥ pāraṃ gacchati",
  "SA08n967:261": "tṛṣṇānadīṃ tripathagāṃ pramādāvartadustarām |",
  "SA08n967:262": "prajñānāvaṃ samāśritya pāraṃ gacchantyanāmayam ||95 ||",
  "SA08n967:263": "mahecchatāmahacchatraṃ yena cāyānti bāliśāḥ |",
  "SA08n967:264": "tasmānmahecchatā badhyā tvayeyaṃ jñānacakṣuṣā ||96 ||",
  "SA08n967:265": "mahecchaiva hṛdayavraṇabhūtā",
  "SA08n967:266": "mahecchatāvraṇastīvro hṛdaye yasya jāyate |",
  "SA08n967:267": "na rātrau na divā tasya sukhaṃ bhavati lobhinaḥ ||97 ||",
  "SA08n967:268": "saṅkalpe tu na sambhūtaḥ tṛṣṇāvāyusamīritaḥ |",
  "SA08n967:269": "mahecchatāmayo vahnirdahate hṛdayaṃ nṛṇām ||98 ||",
  "SA08n967:270": "lobhenātmano'hitaṃ kurvanti janāḥ",
  "SA08n967:271": "lobhenāveṣṭitamanāḥ puruṣo laghucetasā |",
  "SA08n967:272": "jīvitānyapi sārāṇi jahāti dhanatṛṣṇayā ||99 ||",
  "SA08n967:273": "pāpāni hi ca karmāṇi kurvanti puruṣāḥ kṣitau |",
  "SA08n967:274": "dhanalābhena tat sarva pravadanti manīṣiṇaḥ ||100 ||",
  "SA08n967:275": "ye sāhasaṃ na kurvanti viśanti jvalanaṃ ca yat |",
  "SA08n967:276": "tat sarva lobhadoṣeṇa kurvantyahitamātmanaḥ ||101 ||",
  "SA08n967:277": "śastrānilāni duḥkhāni vividhāni ca (sarvataḥ) |",
  "SA08n967:278": "viśanti (vai)",
  "SA08n967:279": "narā mūḍhā lobhastatra hi kāraṇam ||102 ||",
  "SA08n967:280": "hṛdayastho manovahnirnityaṃ bahvicchatāṃ nṛṇām |",
  "SA08n967:281": "alpecchatayā (hi)",
  "SA08n967:282": "hṛcchāntirbhavatilābhinaḥ ||103 ||",
  "SA08n967:283": "yathāgnirindhanenaiva praśāntimadhigacchati |",
  "SA08n967:284": "tathā vahvicchatāṃ nṛṇāṃ dhanairvṛddhiḥ prajāyate ||104 ||",
  "SA08n967:285": "alpecchataiva sukham",
  "SA08n967:286": "bhūpālā (hi) dhanaistṛptāḥ koṭiśo nidhanaṃ gatāḥ |",
  "SA08n967:287": "yāsyanti cānye nidhanaṃ tasmādalpecchatā sukham ||105 ||",
  "SA08n967:288": "tṛṣṇāvihīna eva sukhamāpnoti",
  "SA08n967:289": "duḥkhaṃ vahvicchatā nṛṇāṃ lakṣaṇaṃ sukhaduḥkhayoḥ |",
  "SA08n967:290": "(heyā sarvaprayatnena )",
  "SA08n967:291": "idamuktaṃ parīkṣakaiḥ |",
  "SA08n967:292": "eṣa panthāḥ śivaḥ śreṣṭho yena tṛṣṇā vaśīkṛtā ||106 ||",
  "SA08n967:293": " ||iti tṛṣṇāvargo'ṣṭamaḥ ||"
}