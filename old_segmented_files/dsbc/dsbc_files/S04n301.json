{
  "S04n301:0": "5 sudurjayā nāma pañcamī bhūmiḥ |",
  "S04n301:1": "upakramagāthāḥ |",
  "S04n301:2": "caraṇamatha śruṇitvā bhūmiśreṣṭhāṃ vidūnāṃ",
  "S04n301:3": "jinasuta parituṣṭā harṣitā dharmahetoḥ |",
  "S04n301:4": "gagani kusumavarṣaṃ utsṛjantī udagrāḥ",
  "S04n301:5": "sādhu sugataputra vyāhṛtaṃ te mahātmā || 1 ||",
  "S04n301:6": "marupati vaśavartī sārdha devāgaṇena",
  "S04n301:7": "svagagata sugatasya pūjānārthaṃ udagrā |",
  "S04n301:8": "vividharucirameghāḥ snigdhaābhā manojñāḥ",
  "S04n301:9": "abhikira sugatasya harṣitāḥ prīṇitāśca || 2 ||",
  "S04n301:10": "gītaruta manojñā vādyatūryābhinādā",
  "S04n301:11": "devavadhuprayuktāḥ śāstu saṃpūjanārtham |",
  "S04n301:12": "jina puna tatharūpaṃ darśayanti sma sthānaṃ",
  "S04n301:13": "sarvarutasvarebhī eva śabdaḥ prayuktaḥ || 3 ||",
  "S04n301:14": "sucireṇa āśayu prapūrṇa muneḥ",
  "S04n301:15": "sucireṇa bodhi śiva prāpta jinaḥ |",
  "S04n301:16": "sucireṇa dṛṣṭa naradevahitaḥ",
  "S04n301:17": "saṃprāpta devapuri śākyamuniḥ || 4 ||",
  "S04n301:18": "sucireṇa sāgarajalāḥ kṣubhitāḥ",
  "S04n301:19": "sucireṇa ābha śubha munni jane |",
  "S04n301:20": "sucireṇa sattva sukhitāḥ -",
  "S04n301:21": "sucireṇa śāsu śruta kāruṇikaḥ || 5 ||",
  "S04n301:22": "sucireṇa saṃgamu mahāmuninā",
  "S04n301:23": "saṃprāpta sarvagūṇapāramitaḥ |",
  "S04n301:24": "mada māna darpa prajahitva tamaṃ",
  "S04n301:25": "pūjārhu pūjima mahāśramaṇam || 6 ||",
  "S04n301:26": "(iha pūji kṛtva khagamārgagatā)",
  "S04n301:27": "iha pūji kṛtva sukha nekavidham |",
  "S04n301:28": "iha pūji kṛtva dukhasarvakṣaye",
  "S04n301:29": "iha pūji kṛtva jina jñānavaram || 7 ||",
  "S04n301:30": "gaganopamaḥ paramuśuddhu jinu",
  "S04n301:31": "jagatī aliptu yatha padmu jale |",
  "S04n301:32": "abhyudgato udadhi meruriva",
  "S04n301:33": "harṣitva cittu jina pūjayathā || 8 ||",
  "S04n301:34": "athābravīdvajragarbhaṃ vimukticandro viśāradaḥ |",
  "S04n301:35": "pañcamyā bhūmya ākarān nirdiśasva viśārada || 10 ||",
  "S04n301:36": "upasaṃhāragāthāḥ |",
  "S04n301:37": "evaṃ viśodhita caturṣu jinacarīṣu",
  "S04n301:38": "buddhayā triyādhvasamatā anucintayanti |",
  "S04n301:39": "śīlaṃ ca cittapratipattitu mārgaśuddhiḥ",
  "S04n301:40": "kāṅkṣāvinīta vidu pañcami ākramanti || 11 ||",
  "S04n301:41": "smṛti cāpa indriya iṣu anivartitāśca",
  "S04n301:42": "samyakprahāṇa haya vāhana ṛddhipādāḥ |",
  "S04n301:43": "pañca balāḥ kavaca sarvapipūabhebyāḥ",
  "S04n301:44": "śūrāṇivarti vidu pañcami ākramanti || 12 ||",
  "S04n301:45": "hyapatrāpyavastravidunāṃ śuciśīlagandho",
  "S04n301:46": "bodhyaṅgamālyavaradhyānavilepanaṃ ca |",
  "S04n301:47": "prajñāvicāraṇavibhūṣaṇupāyaśreṣṭham",
  "S04n301:48": "udyānadhāraṇita pañcamimākramanti || 13 ||",
  "S04n301:49": "catuṛddhipādacaraṇāḥ smṛtiśuddhigrīvāḥ",
  "S04n301:50": "kṛpamaitraśreṣṭhanayanā varaprajñadaṃṣṭrā |",
  "S04n301:51": "nairātmyanāda ripukleśa pradharṣamāṇā",
  "S04n301:52": "narasiṃha samya vidu pañcamimākramanti || 14 ||",
  "S04n301:53": "te pañcamīmupagatā varabhūmiśreṣṭhāṃ",
  "S04n301:54": "pariśuddhamārga śubhamuttari bhāvayanti |",
  "S04n301:55": "śuddhāśayā vidu jinatvanuprāpaṇārthī",
  "S04n301:56": "kṛpamaitrakhedavigatā anucintayanti || 15 ||",
  "S04n301:57": "saṃbhārapuṇyupacayā tatha jñāna śreṣṭhaṃ",
  "S04n301:58": "naikā upāya abhirocanabhūmya bhāsān |",
  "S04n301:59": "buddhadhiṣṭhāna smṛtimāṃ matibuddhiprāptā",
  "S04n301:60": "cattvāri satya nikhilānanucintayanti || 16 ||",
  "S04n301:61": "paramārthasatyamapi saṃvṛtilakṣaṇaṃ ca",
  "S04n301:62": "satyavibhāgamatha satyanitīraṇaṃ ca |",
  "S04n301:63": "tatha vastu sāsrava kṣayaṃ api mārgasatyaṃ",
  "S04n301:64": "yāvantanāvaraṇasatya samosaranti || 17 ||",
  "S04n301:65": "evaṃ ca satya parimārgati sūkṣmabuddhiḥ",
  "S04n301:66": "na ca tāvadanāvaraṇaprāptu vimokṣaṃ śreṣṭham |",
  "S04n301:67": "jñānādhimuktivipulāttu guṇākarāṇām",
  "S04n301:68": "atibhonti sarvajagato arhapratyayānām || 18 ||",
  "S04n301:69": "so eva satyaabhinirhṛta tattvabuddhiḥ",
  "S04n301:70": "jānāti saṃskṛta mṛṣāprakṛtī asāram |",
  "S04n301:71": "kṛpamaitraābha labhate sugatāna bhūyaḥ",
  "S04n301:72": "sattvārthikaḥ sugatajñāna gaveṣamāṇaḥ || 19 ||",
  "S04n301:73": "pūrvāpare vidu nirīkṣatu saṃskṛtasya",
  "S04n301:74": "mohāndhakāratamasāvṛta duḥkhalagnā |",
  "S04n301:75": "abhyuddharoti jagato dukhaskandhavṛddhān",
  "S04n301:76": "nairātmyajīvarahitāṃstṛṇakāṣṭhatulyān || 20 ||",
  "S04n301:77": "kleśādvayena yugapatpunarbhāsi tryadhvaṃ",
  "S04n301:78": "chedo dukhasya na ca anta samosarantaḥ |",
  "S04n301:79": "hanto praṇaṣṭa jana te'tidayābhijātā",
  "S04n301:80": "saṃsārasrota na nivartati niḥsvabhāvam || 21 ||",
  "S04n301:81": "skandhālayā uragadhātu kudṛṣṭiśalyāḥ",
  "S04n301:82": "saṃtapta agnihṛdayāvṛta andhakāre |",
  "S04n301:83": "tṛṣṇārṇavaprapatitā avalokanatvāt",
  "S04n301:84": "jinasārthavāhavirahā dukhaarṇavasthāḥ || 22 ||",
  "S04n301:85": "evaṃ viditva punarārabhate'pramatto",
  "S04n301:86": "taccaiva ārabhati sarvajagadvimokṣī |",
  "S04n301:87": "smṛtimantu bhonti matimān gatimān dhṛtīṃ ca",
  "S04n301:88": "hrīmāṃśca bhonti tatha buddhina prajñavāṃśca || 23 ||",
  "S04n301:89": "avitṛptu puṇyupacaye tatha jñāna śreṣṭhaṃ",
  "S04n301:90": "no khedavānna śithilo balameṣamāṇaḥ |",
  "S04n301:91": "kṣetraṃ vidhāya jinalakṣaṇabuddhaghoṣam",
  "S04n301:92": "avitṛptasarvakriya sattvahitārthayuktaḥ || 24 ||",
  "S04n301:93": "paripācanāya jagato vidu śilpasthānān",
  "S04n301:94": "lipimudrasaṃkhyagaṇadhātucikitsatantrān |",
  "S04n301:95": "bhūtagrahāviṣamaroganivartanārthaṃ",
  "S04n301:96": "sthāpenti śastra rucirān kṛpamaitrabuddhī || 25 ||",
  "S04n301:97": "varakāvyanāṭakamatiṃ vividhapraharṣān",
  "S04n301:98": "nadyodiyānaphalapuṣpanipadyasthānān |",
  "S04n301:99": "sthāpenti nekakriya sattvasukhāpanārthaṃ",
  "S04n301:100": "ratnākarāṃśca upadarśayi naikarūpān || 26 ||",
  "S04n301:101": "bhūmīcalaṃ ca graha jyotiṣa candrasūryau",
  "S04n301:102": "sarvāṅgalakṣaṇavicāraṇarājyasthānam |",
  "S04n301:103": "ārūpyadhyāna tathabhijña athāpramāṇā",
  "S04n301:104": "abhinirharanti hitasaukhyajagārthakāmāḥ || 27 ||",
  "S04n301:105": "iha durjayāmupajatā varaprajñacārī",
  "S04n301:106": "pūjenti buddha nayutā śṛṇuvanti dharmam |",
  "S04n301:107": "teṣāṃ śubhaṃ punaruttapyati āśayaśca",
  "S04n301:108": "svarṇaṃ yathā musaragalvayasaṃvimṛṣṭam || 28 ||",
  "S04n301:109": "ratnāmayā grahavimān vahanti vātā",
  "S04n301:110": "te yehi tehi tu vahanti asaṃhṛtāśca |",
  "S04n301:111": "tatha lokadharmi caramāna jagārthacārī",
  "S04n301:112": "asaṃhārya bhonti yatha padma jale aliptam || 29 ||",
  "S04n301:113": "atra sthitā tuṣita īśvara te kṛtāvī",
  "S04n301:114": "nāśenti tīrthyacaraṇān pṛthudṛṣṭisthānān |",
  "S04n301:115": "yaccācaranti kuśalaṃ jinajñānahetoḥ",
  "S04n301:116": "sattvāna trāta bhavamo daśabhirbalāḍhyaiḥ || 30 ||",
  "S04n301:117": "te vīryamuttari samārabhi aramattāḥ",
  "S04n301:118": "koṭisahasra sugatānabhipūjayanti |",
  "S04n301:119": "labdhvā samādhi vidu kampayi kṣetrakoṭī",
  "S04n301:120": "praṇidhīviśeṣu anubhūya guṇākarānām || 31 ||",
  "S04n301:121": "ityeṣā pañcamī bhūmirvicitropāyakoṭibhiḥ |",
  "S04n301:122": "nirdiṣṭā sattvasārāṇāmuttamā sugatātmajāḥ || 32 ||"
}