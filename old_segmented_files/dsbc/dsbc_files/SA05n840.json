{
  "SA05n840:0": "dharmadhātunāmastavaḥ",
  "SA05n840:1": "vaṃ kāraṃ vajrasattvaṃ ca vajrāsanasadāsthitam |",
  "SA05n840:2": "vāruṇamaṇḍalavyāpi vairocana namo'stu te || 1 ||",
  "SA05n840:3": "akāramādisvabhāvamākāśe vyāpitaṃ tathā |",
  "SA05n840:4": "arkanīlasamasteja akṣobhyaśrī namo'stu te || 2 ||",
  "SA05n840:5": "rakāraṃ lakṣmīsvabhāvaṃ nānāratnamanekadhā",
  "SA05n840:6": "raṃ vyāpitaṃ ca pṛthvīṃ ratnasaṃbhava namo'stu te || 3 ||",
  "SA05n840:7": "akāramasthiraṃ bhāvaṃ padmanāgasamaprabham |",
  "SA05n840:8": "agnitejaḥsamādhisthaṃ amitābha namo'stu te || 4 ||",
  "SA05n840:9": "akāraṃ tatsvabhāvaṃ ca gandhavāhasamaprabham |",
  "SA05n840:10": "akāraviśvavajraṃ ca amodhasiddhi namo'stu te || 5 ||",
  "SA05n840:11": "dhakāraṃ dharmasvabhāvaṃ dharmasaṃghasvarūpakam |",
  "SA05n840:12": "dhātvaṣṭakaṃ kīrtitaṃ ca dharmadhātu namo'stu te || 6 ||",
  "SA05n840:13": "sakāraṃ sarvasampattiḥ sarvamaṅgalamarthanam |",
  "SA05n840:14": "sarvasiddhistvamevātha siddhivajra namo'stu te || 7 ||",
  "SA05n840:15": "śrī dharmadhātunāmastavaḥ samāptaḥ |"
}