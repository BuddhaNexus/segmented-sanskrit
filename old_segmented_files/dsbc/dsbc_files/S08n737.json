{
  "S08n737:0": "CHAPTER 24",
  "S08n737:1": "SARVA-KULA-KALPA-GUHYA-VIDHI-VISTARA-TANTRA",
  "S08n737:2": "atha vajrapāṇirmahābodhisatvaḥ sarvatathāgataguhyasiddhitantramudājahāra |",
  "S08n737:3": "tatrādita eva sarvatathāgatottamasiddhiguhyatantraṃ |",
  "S08n737:4": "buddhabodhisamādhintu bhāvayan susamāhitaḥ |",
  "S08n737:5": "sukhena labhyate bodhiriti cintyāvabudhyatī- ||",
  "S08n737:6": "tyāha bhagavān sarvatathāgataḥ ||",
  "S08n737:7": "tatredaṃ tathāgatakulottamasiddhiguhyatantraṃ |",
  "S08n737:8": "satvavajrāṃ hṛdi badhvā bhāryā me tvamiti priyā |",
  "S08n737:9": "dṛḍhībhava iti prokte sarvamudrāstu sādhayet ||1 ||",
  "S08n737:10": "anena vidhiyogena asiddhāpi svakarmabhiḥ |",
  "S08n737:11": "guhyabhāryāmiti proktvā sutarāṃ siddhimāpnuyād ||",
  "S08n737:12": "ityāha bhagavān satvavajraḥ ||",
  "S08n737:13": "tatredaṃ vajrakulottamasiddhiguhyatantraṃ |",
  "S08n737:14": "yathā tathā hi kupito vajra-huṃ-kāramudrayā |",
  "S08n737:15": "mārayan sarvabuddhāṃstu bhayāt siddhi[ndadaṅkared ||",
  "S08n737:16": "ityāha] bhagavān sarvatathāgatahuṅkāraḥ ||",
  "S08n737:17": "tatredaṃ padmakulottamasiddhiguhyatantraṃ |",
  "S08n737:18": "samādhimudrāṃ sandhāya nirīkṣan vajradṛṣṭinā |",
  "S08n737:19": "svadāraṃ paradāraṃ vā priyāṃ siddhimavāpnuyate- ||",
  "S08n737:20": "tyāha bhagavān padmarāgaḥ ||",
  "S08n737:21": "tatredaṃ maṇikulottamasiddhiguhyatantraṃ |",
  "S08n737:22": "dvayendriyasamāpattyā sukhamagramiti brūvan |",
  "S08n737:23": "svendriyaṃ sarvabuddhānāṃ niryātya laghu sidhyatī- ||",
  "S08n737:24": "tyāha bhagavān maṇirāgaḥ ||",
  "S08n737:25": "sarvakulottamasiddhiguhyatantraḥ ||",
  "S08n737:26": "atha vajrapāṇirmahābodhisatvaḥ sarvatathāgatasamayasiddhiguhyatantramudājahāra |",
  "S08n737:27": "tatredaṃ tathāgatasamayasiddhiguhyatantraṃ |",
  "S08n737:28": "samayastvamiti proktvā rāgayetsarvayoṣitaḥ |",
  "S08n737:29": "ma virāgaya satvārthaṃ dhruvaṃ buddhāṃ sa rāgayed ||",
  "S08n737:30": "ityāha bhagavān mahāvairocanaḥ ||",
  "S08n737:31": "tatredaṃ tathāgatakulasamayasiddhiguhyatantraṃ |",
  "S08n737:32": "rāgo hi nāvamantavyo rāgayetsarvayoṣitaḥ |",
  "S08n737:33": "vajriṇo guhyasamayamidaṃ rakṣaṃstu sidhyatī- ||",
  "S08n737:34": "tyāha bhagavān vairocanaḥ ||",
  "S08n737:35": "tatredaṃ vajrakulasamayasiddhiguhyatantraṃ |",
  "S08n737:36": "mārayanmārayellokaṃ kāyavākkarmasatkriyaiḥ |",
  "S08n737:37": "hūṃ-kāraistu viśuddhyarthaṃ samayo hyarthasiddhida ||",
  "S08n737:38": "ityāha bhagavān trilokavijayaḥ |",
  "S08n737:39": "tatredaṃ padmakulasamayasiddhiguhyatantraṃ |",
  "S08n737:40": "rāgaḥ śuddhātmanāṃ śuddho hyaśuddhastīrthyayogināṃ |",
  "S08n737:41": "śuddhātmanāṃ tu samayaṃ pālayan siddhimāpnuyād ||",
  "S08n737:42": "ityāha bhagavānavalokiteśvaraḥ ||",
  "S08n737:43": "tatredaṃ maṇikulasamayasiddhiguhyatantraṃ |",
  "S08n737:44": "badhvā vajramaṇiṃ pūrvaṃ vajragarbhasamādhinā |",
  "S08n737:45": "duṣṭānāṃ tu harannarthān samayaḥ siddhido bhaved ||",
  "S08n737:46": "i]tyāha bhagavān vajraratnaḥ ||",
  "S08n737:47": "sarvakulasamayasiddhiguhyavidhivistaratantraṃ ||",
  "S08n737:48": "atha vajrapāṇirmahābodhisatvaḥ sarvatathāgatadharmasiddhiguhyatantramudājahāra |",
  "S08n737:49": "tatredaṃ tathāgatadharmasiddhiguhyatantraṃ |",
  "S08n737:50": "svabhāvaśuddhiṃ dharmāṇāṃ bhāvayan susamāhitaḥ |",
  "S08n737:51": "sarvakāryāṇi kurvan vai bodhīṃ siddhimavāpnute- ||",
  "S08n737:52": "tyāha bhagavān vajradhātuḥ ||",
  "S08n737:53": "tatredaṃ tathāgatakuladharmasiddhiguhyatantraṃ |",
  "S08n737:54": "sarvasatvānurāgaśca viṣayeṣvavirāgitā |",
  "S08n737:55": "rāmārāmaṇaśuddhistu guhyadharmaḥ susiddhida ||",
  "S08n737:56": "ityāha bhagavān vajraguhyaḥ ||",
  "S08n737:57": "tatredaṃ vajrakuladharmasiddhiguhyatantraṃ |",
  "S08n737:58": "nāsāhuṃkārayogena sarvaduṣṭāṃstu mārayan |",
  "S08n737:59": "sūkṣmavajrasamādhisthaḥ parāṃ siddhimavāpnuyād ||",
  "S08n737:60": "ityāha bhagavān dharmahuṃkāraḥ ||",
  "S08n737:61": "tatredaṃ padmakuladharmasiddhiguhyatantraṃ |",
  "S08n737:62": "sūkṣmavajraprayogeṇa rāmayetsarvayoṣitaḥ |",
  "S08n737:63": "dharmasiddhimavāpnoti vajradharmasamādhine- ||",
  "S08n737:64": "tyāha bhagavānavalokiteśvaraḥ |",
  "S08n737:65": "tatredaṃ maṇikuladharmasiddhiguhyatantraṃ |",
  "S08n737:66": "dvayendriyasamāpattyā sarvāśā paripūrayan |",
  "S08n737:67": "yoṣitāṃ vā priyāṇāṃ vā siddhimāpnotyanuttarām |",
  "S08n737:68": "ityāha bhagavān vajraratnaḥ ||",
  "S08n737:69": "sarvakuladharmasiddhiguhyavidhivistaratantraṃ ||",
  "S08n737:70": "atha vajrapāṇirmahābodhisatvaḥ sarvatathāgatakarmasiddhiguhyatantramudājahāra |",
  "S08n737:71": "tatredaṃ tathāgatakarmasiddhiguhyatantraṃ |",
  "S08n737:72": "vajrasatvasamādhistho buddhānusmṛtibhāvakaḥ |",
  "S08n737:73": "strīkāyaṃ praviśanyonyā vaśīkuryāttu yoṣita ||",
  "S08n737:74": "ityāha bhagavān vairocanaḥ ||",
  "S08n737:75": "tatredaṃ tathāgatakulakarmasiddhiguhyatantraṃ |",
  "S08n737:76": "vajrasatvasamādhistho bhagena praviśaṃstathā |",
  "S08n737:77": "striyā kāye spharetsamyag niśceṣṭāmapi rāgayed ||",
  "S08n737:78": "ityāha bhagavān vajrarāgaḥ ||",
  "S08n737:79": "tatredaṃ vajrakulakarmasiddhiguhyatantraṃ |",
  "S08n737:80": "vajrahuṃkāramudrāṃ vai badhvā tu susamāhitaḥ |",
  "S08n737:81": "praviśaṃstu bhage kruddhaḥ manasā sa tu pātayed ||",
  "S08n737:82": "ityāha bhagavān vajrasamayaḥ ||",
  "S08n737:83": "tatredaṃ padmakulakarmasiddhiguhyatantraṃ |",
  "S08n737:84": "dharmakarmamayīmudrāṃ badhvā padmasamādhinā |",
  "S08n737:85": "bhagena praviśan rakṣedapi sarvāstu yoṣita ||",
  "S08n737:86": "ityāha bhagavān vajrapadmaḥ |",
  "S08n737:87": "tatredaṃ maṇikulakarmasiddhiguhyatantraṃ |",
  "S08n737:88": "karmavajramaṇiṃ badhvā vajraratnasamādhinā |",
  "S08n737:89": "bhagena praviśan strīṇāṃ kṣaṇādāviśya nartatī- ||",
  "S08n737:90": "tyāha bhagavān vajraratnaḥ ||",
  "S08n737:91": "sarvakulakarmasiddhiguhyavidhivistaratantraṃ ||",
  "S08n737:92": "athavajrapāṇirmahābodhisatvaḥ sarvatathāgatamaṇḍalaśuddhisiddhiguhyatantramudājahāra |",
  "S08n737:93": "tatredaṃ sarvatathāgatacakraśuddhisiddhiguhyatantraṃ bhavati |",
  "S08n737:94": "dharmacakrasamākāraṃ kuryādvā guhyamaṇḍalaṃ |",
  "S08n737:95": "mudrā bhāryā parivṛtaṃ tatra buddhanniveśayet ||1 ||",
  "S08n737:96": "praviṣṭvaiva hi tadguhyaṃ brūyādbuddhasya tatkṣaṇāt |",
  "S08n737:97": "“bhāryā hyetāstava vibho dadasva mama sarvada” ||2 ||",
  "S08n737:98": "evaṃ brūvaṃstu sarveṣu kulamudrā nayeṣu ca |",
  "S08n737:99": "guhyasiddhimavāpnoti buddhānāmasamatviṣām ||3 ||",
  "S08n737:100": "ityāha bhagavān buddhaḥ ||",
  "S08n737:101": "tatredaṃ tathāgatakulasarvamaṇḍalasiddhiguhyatantraṃ |",
  "S08n737:102": "vajradhātupratīkāśaṃ maṇḍalaṃ tu samālikhet |",
  "S08n737:103": "tathāgatakulānāṃ tu sarveṣāṃ paramannayaṃ ||",
  "S08n737:104": "[siddhikāmastvāśu] brūyātpravi[ṣṭaiva tanmaṇḍalaṃ] |",
  "S08n737:105": "surate samayastvaṃhoḥ,",
  "S08n737:106": "vajrasatvādya sidhya māṃ ||2 ||",
  "S08n737:107": "idaṃ japaṃstu hṛdayaṃ sādhayet sarvasiddhayaḥ |",
  "S08n737:108": "[tatvacodanayoge]na tuṣṭaḥ sa tvāśu sidhyatī- ||",
  "S08n737:109": "tyāha bhagavān vajrasatvaḥ ||",
  "S08n737:110": "tatredaṃ vajrakulasarvamaṇḍalasiddhiguhyatantraṃ |",
  "S08n737:111": "trilokavijayākāraṃ sarvavajrakulasya hi |",
  "S08n737:112": "sarvamaṇḍalayogaṃ tu saṃlikheta vicakṣaṇaḥ ||1 ||",
  "S08n737:113": "taṃ praviṣṭvaiva śīghraṃ vai brūyātsiddhiṃ tu yācayan |",
  "S08n737:114": "“rāgāttvamasi saṃbhūta”,",
  "S08n737:115": "evaṃ sarveṣu sidhyatī- ||2 ||",
  "S08n737:116": "tyāha bhagavān vajrahuṃkāraḥ ||",
  "S08n737:117": "tatredaṃ padmakulamaṇḍalasiddhiguhyatantraṃ |",
  "S08n737:118": "jagadvinayayogena sarvapadmakuleṣu vai |",
  "S08n737:119": "maṇḍalāni likhetprajñastaṃ praviṣṭvaiva vāgvadet ||1 ||",
  "S08n737:120": "“rāgadharma mahāpadma prasidhya laghu me vibho” |",
  "S08n737:121": "evamuktvā tu sarveṣu maṇḍaleṣu sa sidhyatī- ||2 ||",
  "S08n737:122": "tyāha bhagavānavalokiteśvaraḥ ||",
  "S08n737:123": "tatredaṃ maṇikulamaṇḍalasiddhiguhyatantraṃ |",
  "S08n737:124": "sarvārthasiddhiyogena maṇḍalāni samālikhet |",
  "S08n737:125": "mahāmaṇikulānāṃ tu taṃ praviṣṭvaiva vāgvadet ||1 ||",
  "S08n737:126": "“sarvābhiprāyasiddhīnāṃ rāgāśāsiddhiruttamā |",
  "S08n737:127": "sidhya sidhya mahāsatva bhagavan sarvasiddhaye” ||2 ||",
  "S08n737:128": "evaṃ brūvaṃstu sarveṣu maṇḍaleṣu praveśataḥ |",
  "S08n737:129": "mahāsiddhimavāpnoti pūjāguhyamanuttaraṃ ||3 ||",
  "S08n737:130": "tataḥ prabhṛti siddhātmā sādhayan siddhayaḥ sadā |",
  "S08n737:131": "yadā na laghu siddhiḥ syāt sidhyante tatvacodanair ||4 ||",
  "S08n737:132": "ityāha bha[gavān vajrasatvaḥ ||]",
  "S08n737:133": "sarvakulamaṇḍalasiddhiguhyavidhivistaratantraṃ ||",
  "S08n737:134": "atha vajrapāṇirmahābodhisatvaḥ sarvatathāgatasarvamudrāguhyasiddhitantramudājahāra |",
  "S08n737:135": "tatredaṃ tathāgatamudrāguhyasiddhitantraṃ |",
  "S08n737:136": "tathāgatamahādevyaḥ priyāḥ sarvasukhapradāḥ |",
  "S08n737:137": "satyānuparivartinyā vāssatyaiḥ sāpi tā yanna sidhyata ||",
  "S08n737:138": "ityāha bhagavān buddhaḥ ||",
  "S08n737:139": "tatredaṃ tathāgatakulamahāmudrāguhyasiddhitantraṃ |",
  "S08n737:140": "mahāmudrāṃ tu vai badhvā yathāvadanupūrvaśaḥ |",
  "S08n737:141": "idaṃ tatvaṃ rahasyaṃ ca vajravācā vadetvayaṃ ||1 ||",
  "S08n737:142": "vajrasatvaḥ svayamahaṃ tvamme bhāryā hṛdi sthitā |",
  "S08n737:143": "sarvakāyaṃ pariṣvajya vajragarve samutkṣipa ||2 ||",
  "S08n737:144": "vajragarvā mahādevī tatvacodānurāgitā |",
  "S08n737:145": "sarvakāye dṛḍhībhūtvā yathāvatsidhyate laghur ||3 ||",
  "S08n737:146": "ityāha bhagavān vajragarvāpatiḥ ||",
  "S08n737:147": "tatredaṃ vajrakulasamayamudrāguhyasiddhitantraṃ |",
  "S08n737:148": "“sidhya sidhyādya samaye samayo'haṃ tvaṃ priyā mama” |",
  "S08n737:149": "iti codanayā śīghramanuraktā prasidhyatī- ||",
  "S08n737:150": "tyāha bhagavān vajrasatvaḥ ||",
  "S08n737:151": "tatredaṃ padmakuladharmamudrāguhyasiddhitantraṃ |",
  "S08n737:152": "“budhya budhya mahāsatvi bhāryā me tvamatipriyā” |",
  "S08n737:153": "iti codanayā śīghramanuraktā tu sidhyatī- ||",
  "S08n737:154": "tyāha bhagavān vajradharmaḥ ||",
  "S08n737:155": "tatredaṃ maṇikulakarmamudrāguhyasiddhitantraṃ |",
  "S08n737:156": "“sarvakarmakarī bhāryā tvaṃ me sidhyādya vajriṇi” |",
  "S08n737:157": "iti codanayā śīghramanuraktā tu sidhyatī- ||",
  "S08n737:158": "tyāha bhagavānākāśagarbhaḥ ||",
  "S08n737:159": "sarvakulasarvamudrā[guhyasi]ddhividhivistaratantraṃ ||",
  "S08n737:160": "atha vajrapāṇirmahābodhisatvaḥ sarvatathāgatasamayaguhyasiddhitantramudājahāra |",
  "S08n737:161": "tatredaṃ tathāga[tasamayagu]hyasiddhitantraṃ |",
  "S08n737:162": "tīrthikānāṃ hitārthāya buddhabhāryā pragopitā |",
  "S08n737:163": "lekhyā mudrā prayogeṇa iti vijñeya sidhyatī- ||",
  "S08n737:164": "tyāha bhagavān sarvatathāgata[samayaḥ ||]",
  "S08n737:165": "tatredaṃ tathāgatakulasamayaguhyasiddhitantraṃ |",
  "S08n737:166": "sarvasatvamanovyāpī sarvasatvasukhapradaḥ |",
  "S08n737:167": "sarvasatvapitā caiva kāmo'graḥ samayāgriṇām ||",
  "S08n737:168": "ityāhurbhagavantaḥ sarvatathāgatāḥ ||",
  "S08n737:169": "idaṃ tatsarvabuddhānāṃ rahasyaṃ paramādbhutaṃ |",
  "S08n737:170": "vijñeya śraddadhacchddho duḥsādhyo'pi hi sidhyatī- ||",
  "S08n737:171": "tyāha bhagavān vajradharaḥ ||",
  "S08n737:172": "tatredaṃ vajrakulasamayaguhyasiddhitantraṃ |",
  "S08n737:173": "rāgaśuddhyai viraktānāṃ tīrthyadṛṣṭikṛtātmanāṃ |",
  "S08n737:174": "māraṇaṃ samayaṃ tvagramidaṃ vijñeyaṃ sidhyatī- ||",
  "S08n737:175": "tyāha bhagavān vajradharaḥ ||",
  "S08n737:176": "tatredaṃ padmakulasamayaguhyasiddhitantraṃ |",
  "S08n737:177": "mahābhūtodbhavaṃ sarvaṃ,",
  "S08n737:178": "kathaṃ tvaśucirucyate ? |",
  "S08n737:179": "tīrthikānāṃ vināśāya dhruvaṃ siddhimavāpnuyād ||",
  "S08n737:180": "ityāha bhagavān vajranetraḥ ||",
  "S08n737:181": "tatredaṃ maṇikulasamayaguhyasiddhitantraṃ |",
  "S08n737:182": "strīprasaṅgāttu ratnānāṃ saṃcayaḥ kriyate yadā |",
  "S08n737:183": "striyo hyanuttaraṃ ratnamiti cintyate sidhyatī- ||",
  "S08n737:184": "tyāha bhagavānājñākaraḥ ||",
  "S08n737:185": "sarvakalasamayaguhyasiddhividhivistaratantraḥ ||",
  "S08n737:186": "atha vajrapāṇirmahābodhisatvaḥ sarvatathāgatapūjāguhyasiddhitantramudājahāra |",
  "S08n737:187": "tatrāyaṃ tathāgatapūjāguhyasiddhitantraḥ |",
  "S08n737:188": "strībhiḥ parivṛto bhūtvā parihāsakriyā sukhaṃ |",
  "S08n737:189": "niryātya buddhapūjāyāṃ pūjāsiddhimavāpnuyād ||",
  "S08n737:190": "ityāha bhagavān buddhaḥ |",
  "S08n737:191": "tatredaṃ tathāgatakulapūjāguhyasiddhitantraṃ |",
  "S08n737:192": "surataśramakhinnastu tatsaukhyaṃ suratodbhavaṃ |",
  "S08n737:193": "catuḥpraṇāme pūjāyāṃ niryātya laghu sidhyatī- ||",
  "S08n737:194": "tyāha bhagavān vajradharaḥ ||",
  "S08n737:195": "tatredaṃ vajrakulapūjāguhyasiddhitantraṃ |",
  "S08n737:196": "huṃkārasamayāṃ badhvā pariṣvajya striyaṃ janaṃ |",
  "S08n737:197": "tatpariṣvaṅgasaukhyaṃ tu niryātya hi sa sidhyatī- ||",
  "S08n737:198": "tyāha bhagavān vajrahuṃkāraḥ ||",
  "S08n737:199": "tatredaṃ padmakulapūjāguhyasiddhitantraṃ |",
  "S08n737:200": "lokeśvaramahaṃ bhāvya priyāvaktraṃ nirīkṣanvai |",
  "S08n737:201": "tannirīkṣaṇasauravyaṃ tu niryātya hi sa sidhyatī- |",
  "S08n737:202": "tyāha bhagavān padmanetraḥ ||",
  "S08n737:203": "tatredaṃ maṇikulapūjāguhyasiddhitantraṃ |",
  "S08n737:204": "karmamudrādharo bhūtvā sarvābharaṇabhūṣitaḥ |",
  "S08n737:205": "striyaṃ pariṣvajya pūjāyāṃ vibhūtiṃ niryātya sidhyatī- ||",
  "S08n737:206": "tyāha bhagavān vajraratnaḥ ||",
  "S08n737:207": "sarvakulapūjāguhyasiddhividhivistaratantraṃ ||",
  "S08n737:208": "atha vajrapāṇirmahābodhisatvaḥ sarvatathāgataguhyapūjāsiddhitantramudājahāra |",
  "S08n737:209": "tatredaṃ tathāgataguhyapūjāsiddhitantraṃ |",
  "S08n737:210": "ramayan paradārāṇi yathā[ka]ścinna vedayet |",
  "S08n737:211": "bhāvayan buddhamātmānaṃ pūjayā siddhimāpnuyād ||",
  "S08n737:212": "ityāha bhagavān buddhaḥ ||",
  "S08n737:213": "tatredaṃ tathāgata[kula]guhyapūjāsiddhitantraṃ |",
  "S08n737:214": "vajralāsyāṃ samādhāya vajramālāṃ tu bandha[yet] |",
  "S08n737:215": "vajragītāṃ tato badhvā pūjayed vajranṛtyayā ||",
  "S08n737:216": "kā[maratyābhiṣekā]gryā nṛtyagītasukhātsukhaṃ |",
  "S08n737:217": "nānyadasti hi teneyaṃ guhyapūjā niruttarā ||",
  "S08n737:218": "tatredaṃ vajrakulaguhyapūjāsiddhitantraṃ ||",
  "S08n737:219": "yathāvad vidhiyogena pūja[yed] guhyapūjayā |",
  "S08n737:220": "trilokavijayaṃ bhāvya pūjāsiddhima vāpnuyād ||",
  "S08n737:221": "ityāha bhagavān vajraguhyaḥ |",
  "S08n737:222": "tatredaṃ padmakulaguhyapūjāsiddhitantraṃ |",
  "S08n737:223": "ya[thāvad gu]hyayogena dharmamudrā supūjayan |",
  "S08n737:224": "jagadvinayamudrāsthaḥ pūjāsiddhimavāpnute- ||",
  "S08n737:225": "tyāha bhagavānavalokiteśvaraḥ ||",
  "S08n737:226": "tatredaṃ maṇikulaguhyapūjāsiddhitantraṃ |",
  "S08n737:227": "yathāvad guhyayogena karmamudrā susādhayan |",
  "S08n737:228": "sarvārthasiddhiyogena pūjāsiddhimavāpnute- ||",
  "S08n737:229": "tyāha bhagavān vajragarbhaḥ ||",
  "S08n737:230": "sarvakulaguhyapūjāvidhivistaratantraṃ ||",
  "S08n737:231": "atha bhagavān vajrapāṇirmahābodhisatvaḥ sarvatathāgatakulodghāṭanaguhyasiddhitantramudājahāra |",
  "S08n737:232": "tatredaṃ tathāgatatatvotpattisiddhiguhyatantraṃ |",
  "S08n737:233": "samādhijñānasaṃbhūtaṃ buddhatvaṃ hi samāsataḥ |",
  "S08n737:234": "satvarāgaṇayogena śīghramāpnotyanuttaram ||",
  "S08n737:235": "ityāha bhagavāṃstathāgataḥ |",
  "S08n737:236": "tatredaṃ tathāgatakulamahātattvodghāṭanasiddhiguhyatantraṃ |",
  "S08n737:237": "anādinidhanaḥ satvaḥ ākāśotpattilakṣaṇaḥ |",
  "S08n737:238": "samantabhadraḥ sarvātmā kāmaḥ sarvajagatpatiḥ ||1 ||",
  "S08n737:239": "yaccittaṃ sarvasatvānāṃ dṛḍhatvāt satvanucyate |",
  "S08n737:240": "samādhānād vajrasamo niścayairyāti vajratāṃ ||2 ||",
  "S08n737:241": "satvādhiṣṭhānayogena vajrasatvaḥ punarbhavet |",
  "S08n737:242": "sa eva bhagavān satvo vajrakāyastathāgataḥ ||3 ||",
  "S08n737:243": "svacittaprativedhādibuddhabodhiryathāvidhi |",
  "S08n737:244": "sa eva bhagavān sarvatathāgatakulaṃ bhaved ||",
  "S08n737:245": "ityāha bhagavānanādinidhanasatvaḥ ||",
  "S08n737:246": "tathāgatakulaṃ saiva saiva vajrakulaṃ smṛtaṃ |",
  "S08n737:247": "saiva padmakulaṃ śuddhaṃ saivoktaṃ maṇisatkulam ||",
  "S08n737:248": "ityāha bhagavān sarvatathāgatacakraḥ ||",
  "S08n737:249": "sarvakulotpādanaguhyasiddhividhivistaratantraṃ ||",
  "S08n737:250": "atha vajrapāṇirmahābodhisatvaḥ sarvatathāgatamudrācinhābhidhānasiddhiguhyatantramudājahāra |",
  "S08n737:251": "tatredaṃ tathāgatacinhābhidhānasiddhiguhyatantraṃ bhavati |",
  "S08n737:252": "sa eva bhagavān satvo vajrasatvo hṛdi sthitaḥ |",
  "S08n737:253": "samādhānātsamādhistu buddhabodhiprasādhaka ||",
  "S08n737:254": "ityāha bhagavān buddhaḥ ||",
  "S08n737:255": "tatredaṃ tathākulacinhābhidhānasiddhiguhyatantraṃ |",
  "S08n737:256": "vajraṃ suprativedhatvādaṅkuśaṃ grahamocakaḥ |",
  "S08n737:257": "sūkṣmavedhitayā vāṇaṃ sādhukārastu tuṣṭitaḥ ||1 ||",
  "S08n737:258": "ratnastu racanāduktaḥ sūryastejo vidhānataḥ |",
  "S08n737:259": "ketuḥ samucchrayaḥ proktaḥ smito hāsastu kīrtitaḥ ||2 ||",
  "S08n737:260": "rāgaśuddhitayā padmaṃ kośaḥ kleśāricchedanāt |",
  "S08n737:261": "cakro maṇḍalayogāttu vāglāpājjapanucyate ||3 ||",
  "S08n737:262": "sarvavajraṃ tu viśvatvād varmadurbhedyayogataḥ |",
  "S08n737:263": "daṃṣṭrā bhīṣaṇayogāttu bandho mudrāprayogataḥ ||4 ||",
  "S08n737:264": "yathā hi bhagavān śāśvo vajrasatvastu sarvagaḥ |",
  "S08n737:265": "tathā vajrāṃ tu cihnādi bhāvayanniti sidhyatī- ||",
  "S08n737:266": "tyāha bhagavān sarvatathāgatacinhaḥ |",
  "S08n737:267": "sarvakulacihnābhidhānasiddhiguhyatantraṃ ||",
  "S08n737:268": "atha vajrapāṇirmahābodhisatvaḥ sarvatathāgatamudrābandhotpattisiddhiguhyatantramudājahāra |",
  "S08n737:269": "tatredaṃ tathāgatamudrābandhotpattisiddhiguhyatantraṃ |",
  "S08n737:270": "badhvā vai vajraparyaṅkaṅkarābhyāṃ vajrabandhataḥ |",
  "S08n737:271": "vajrasatvasamādhisthaḥ śīghraṃ buddhatvamāpnuyād ||",
  "S08n737:272": "ityāha bhagavān buddhaḥ ||",
  "S08n737:273": "[tatre]daṃ tathāgatakulamudrābandhotpattisiddhiguhyatantraṃ |",
  "S08n737:274": "yathā rājñāṃ svamudrābhiḥ mudryate rājaśāsanaṃ |",
  "S08n737:275": "mahātmanāṃ svamudrābhirāmudryante tathā janāḥ ||1 ||",
  "S08n737:276": "kāyavākcittavajrāṇāṃ pratibimbaprayogataḥ |",
  "S08n737:277": "mahātmanāṃ mahāmudrā iti vijñāya sidhyatī- ||2 ||",
  "S08n737:278": "tyāha bhagavān mahāmudraḥ ||",
  "S08n737:279": "tatredaṃ vajrakulamudrābandhotpattisiddhiguhyatantraṃ |",
  "S08n737:280": "yathāhi samayaistīvraiḥ kaścidbandho bhavejjanaḥ |",
  "S08n737:281": "anatikramaṇīyaistu tathā sarvatathāgatāḥ ||1 ||",
  "S08n737:282": "baddhā hi vajrabandhāgryamudrāsamayabandhanaiḥ |",
  "S08n737:283": "nātikramantyāmaraṇāditi vijñāya sidhyatī- ||",
  "S08n737:284": "tyāha bhagavān vajrasamayaḥ ||",
  "S08n737:285": "tatredaṃ dharmakulamudrābandhotpattisiddhiguhyatantraṃ |",
  "S08n737:286": "anatikramaṇīyā hi vajravāssarvaśo jinaiḥ |",
  "S08n737:287": "ayaṃ bandha iti jñātvā dharmamasya prasidhyatī- ||",
  "S08n737:288": "tyāha bhagavān vajradharmaḥ ||",
  "S08n737:289": "tatredaṃ karmakulamudrābandhotpattisiddhiguhyatantraṃ |",
  "S08n737:290": "anatikramaṇīyā hi vajrājñā karmabhūri ca |",
  "S08n737:291": "ājñāvatastu tatkarma vijñāya laghu sidhyatī- ||",
  "S08n737:292": "tyāha bhagavān vajraḥ ||",
  "S08n737:293": "sarvakulamudrābandhotpattisiddhividhivistaraguhyatantraṃ ||",
  "S08n737:294": "atha khalu bhagavān vajrapāṇiṃ mahābodhisatvamevamāha |",
  "S08n737:295": "“idamapi mayā bhagavan parigṛhītamadhiṣṭhitaṃ ce-” ti ||",
  "S08n737:296": "atha sarvatathāgatāḥ punaḥ samājamāgamya vajrapāṇaye sarvatathāgatadhipataye sādhukārāṇyadaduḥ ||",
  "S08n737:297": "sādhu te vajrasatvāya vajraratnāya sādhu te |",
  "S08n737:298": "vajradharmāya te sādhu sādhu te vajrakarmaṇe ||",
  "S08n737:299": "subhāṣitamidaṃ sūtraṃ vajrayānamanuttaraṃ |",
  "S08n737:300": "sarvatathāgataṃ guhyaṃ mahāyānābhisaṃgraham || iti ||",
  "S08n737:301": "sarvatathāgatatatvasaṃgrahātsarvakulakalpaguhyavidhivistaratantraṃ samāptaṃ ||"
}