{
  "SA14n1202:0": "IX",
  "SA14n1202:1": "stutiparivarto nāma navamaḥ |",
  "SA14n1202:2": "[73] ākārāḥ saprayogāśca guṇā doṣāḥ salakṣaṇāḥ |",
  "SA14n1202:3": "mokṣanirvedhabhāgīye śaikṣo'vaivartiko gaṇaḥ ||1-12 ||",
  "SA14n1202:4": "samatā",
  "SA14n1202:5": "[74] bhavaśāntyośca kṣetraśuddhiranuttarā |",
  "SA14n1202:6": "sarvākārabhisambodha eṣa sopāyakauśalaḥ ||1-13 ||",
  "SA14n1202:7": "ākārāḥ, prayogāḥ,",
  "SA14n1202:8": "guṇāḥ,",
  "SA14n1202:9": "doṣāḥ,",
  "SA14n1202:10": "lakṣaṇāni,",
  "SA14n1202:11": "mokṣabhāgīyaṃ,",
  "SA14n1202:12": "nirvedhabhāgīya,",
  "SA14n1202:13": "avaivartikasaṃghaḥ,",
  "SA14n1202:14": "saṃsāranirvāṇasamatā,",
  "SA14n1202:15": "buddhakṣetrapariśuddhiḥ,",
  "SA14n1202:16": "upāyakauśalaṃ cetyekādaśavastūni sarvākārābhisambodhaḥ |",
  "SA14n1202:17": "yathoddeśaṃ nirdeśāt prathamata ākārāṇāṃ nirdeśaḥ |",
  "SA14n1202:18": "[75] vastujñānaprakārāṇāmākārā iti lakṣaṇam |",
  "SA14n1202:19": "sarvajñatānāṃ traividhyāt trividhā eva te matāḥ ||4-1 ||",
  "SA14n1202:20": "'vastu' ālambanaṃ catuḥsatyādi |",
  "SA14n1202:21": "tasya 'jñānam' |",
  "SA14n1202:22": "tasya 'prakārāḥ' |",
  "SA14n1202:23": "yaiḥ prakāraistatparikṣepaḥ teṣāṃ 'ākārā' iti lakṣaṇatvāt |",
  "SA14n1202:24": "'sarvajñatānāṃ' iti jātau vahuvacanam |",
  "SA14n1202:25": "sarvajñatāyā ityarthaḥ |",
  "SA14n1202:26": "kathaṃ tasyāstraividhyam ?",
  "SA14n1202:27": "sarvajñatā mārgajñatā sarvākārajñatā ceti |",
  "SA14n1202:28": "tatrādau sarvajñatākārāḥ saptaviṃśatiḥ | śāstram-",
  "SA14n1202:29": "[76] asadākāramārabhya yāvanniścalatākṛtiḥ |",
  "SA14n1202:30": "catvāraḥ prati satyaṃ te mārge pañcadaśa smṛtāḥ ||4-2 ||",
  "SA14n1202:31": "asatpāramiteyamiti asadākārāmārabhya yāvadacalapāramiteyamityacalākārāḥ |",
  "SA14n1202:32": "teṣu catvāraścatvāro duḥkhasamudayanirodhasatyeṣu pariviṣṭāḥ |",
  "SA14n1202:33": "pañcadaśa mārgasatye |",
  "SA14n1202:34": "asadākārapāramitā |",
  "SA14n1202:35": "asatpāramitā |",
  "SA14n1202:36": "evamuttarā api sarvāḥ |",
  "SA14n1202:37": "tatra duḥkhe catvāraḥ-asat-samatā-vivikta-anavamṛdya |",
  "SA14n1202:38": "ākāśasamatāmiti |",
  "SA14n1202:39": "ākāśavadrūpāderasattām |",
  "SA14n1202:40": "yathā hyākāśasya rūpidravyābhāvo lakṣaṇaṃ tathā rūpādīnāṃ svalakṣaṇābhāvaḥ |",
  "SA14n1202:41": "sarvadharmānupalabdhisamatāmiti |",
  "SA14n1202:42": "sarvadharmānupalabdhireva sukhaduḥkhayoḥ samatā |",
  "SA14n1202:43": "atyantaśūnyatāmiti |",
  "SA14n1202:44": "pudgalena svabhāvena ca śūnyatāmityarthaḥ |",
  "SA14n1202:45": "bādhakaṃ duḥkhaṃ bādhyatvādavamṛdya ātmā |",
  "SA14n1202:46": "anavamṛdyā'nātmā |",
  "SA14n1202:47": "tadākāratvāt anavamṛdyapāramitā |",
  "SA14n1202:48": "sarvadharmāṇāṃ bādhyabādhakānāmanupalabdhitāṃ nirūpalambhatāṃ [upādāya] |",
  "SA14n1202:49": "samudaye catvāraḥ |",
  "SA14n1202:50": "tathā hi-padaṃ hetuḥ prāktanāḥ skandhāḥ |",
  "SA14n1202:51": "svabhāva ātmano bhāvaḥ |",
  "SA14n1202:52": "kāyakarma |",
  "SA14n1202:53": "vacanaṃ vākkarma |",
  "SA14n1202:54": "nāma manaskarma kleśāśca |",
  "SA14n1202:55": "eṣāmabhāvo yathākramaṃ.....asvabhāvaḥ |",
  "SA14n1202:56": "......tadākāratvāttatpāramitā |",
  "SA14n1202:57": "anāmāśaroratāmiti |",
  "SA14n1202:58": "nāma arūpiṇaḥ skandhāḥ |",
  "SA14n1202:59": "śarīraṃ rūpaskandhaḥ |",
  "SA14n1202:60": "tayorabhāvo'nāmaśarīratā |",
  "SA14n1202:61": "gatyāgatī kāyakarma |",
  "SA14n1202:62": "tadabhāvo'nāgatiragatiśca |",
  "SA14n1202:63": "vācāṃ heturvikalpaḥ |",
  "SA14n1202:64": "tadabhāvo'vikalpatā |",
  "SA14n1202:65": "nirodhe catvāraḥ |",
  "SA14n1202:66": "tathā hyasau gamanaṃ vā syāt grāhyaṃ vā kṣayo vā utpattirvā |",
  "SA14n1202:67": "eṣāmabhāvo yathākramaṃ agamanaṃ,",
  "SA14n1202:68": "asaṃhāryaṃ,",
  "SA14n1202:69": "akṣayaḥ,",
  "SA14n1202:70": "anupapattiḥ |",
  "SA14n1202:71": "tadākāratvāttatpāramitā |",
  "SA14n1202:72": "sarvadharmāṇāmagamanatā gatyabhāvaḥ |",
  "SA14n1202:73": "sarvadharmāṇāmagrāhyatā |",
  "SA14n1202:74": "na hi dharmo dharmaṃ gṛṇhātīti |",
  "SA14n1202:75": "kṣaya eva dharmaḥ |",
  "SA14n1202:76": "tena yogaḥ |",
  "SA14n1202:77": "tadabhāvādakṣayadharmayogatā |",
  "SA14n1202:78": "abhinirvṛttirutpattiḥ |",
  "SA14n1202:79": "tadabhāvādanirvṛttitā |",
  "SA14n1202:80": "mārge-pañcadaśa-akāraka-ajānaka-apaśyaka-asaṃkrānti-avinaya-svapna-pratiśrutka-pratibhāsa-marīci-māyā-asaṃkleśa-avyavadāna-anupalepa-aprapañca amananā-acalā |",
  "SA14n1202:81": "akārakādyākāratvāttatpāramitā |",
  "SA14n1202:82": "akārako mārgastena kārakānupalabdheḥ |",
  "SA14n1202:83": "ajānakāpaśyako mārgastena jānakapaśyakānupalabdheḥ |",
  "SA14n1202:84": "asaṃkrāntirmārgastena cyutyupapattyorayogadarśanāt |",
  "SA14n1202:85": "avinayo mārgastena tryadhvasamāyā dharmaprakṛteravinayāt |",
  "SA14n1202:86": "svapnāditulyatvāt svapno mārgaḥ vinaiva draṣṭāramandhaḥkārāt (?) |",
  "SA14n1202:87": "pratiśrutko mārgaḥ |",
  "SA14n1202:88": "asati śabde śabdopalambhāt |",
  "SA14n1202:89": "pratibhāsaḥ pratibimbaṃ sa mārgaḥ |",
  "SA14n1202:90": "asatyarthe'rthadarśanāt |",
  "SA14n1202:91": "marīcirmārgaḥ |",
  "SA14n1202:92": "tajjalaskandhavadasato lokadhātoḥ pratibhāsāt |",
  "SA14n1202:93": "māyā mārgo nimittāpratibhāsāt |",
  "SA14n1202:94": "anutpādavijñāpanatāmiti |",
  "SA14n1202:95": "yataḥ pañcabhirapyebhiranutpādo mārga ādīpyate |",
  "SA14n1202:96": "pratibhāsahetumantareṇa tathā tathā pratibhāsāt |",
  "SA14n1202:97": "asaṃkleśo mārgastena rāgādyanupalabdheḥ |",
  "SA14n1202:98": "avyavadānaṃ mārgastena kliṣṭasattvānupalabdheḥ |",
  "SA14n1202:99": "anupalepo mārgaḥ |",
  "SA14n1202:100": "ākāśavannirupalepasya dharmadhātostena darśanāt |",
  "SA14n1202:101": "aprapañco mārgaḥ prapañcapratipakṣatvāt |",
  "SA14n1202:102": "amananā mārgaḥ |",
  "SA14n1202:103": "sarvamananāsamuddhātitvāt |",
  "SA14n1202:104": "acalo mārgaḥ |",
  "SA14n1202:105": "dharmadhātuśarīratvena śāśvatatvāt |",
  "SA14n1202:106": "iti sarvajñatākārāḥ ||",
  "SA14n1202:107": "atha mārgajñatākārāḥ ṣaṭtriṃśat |",
  "SA14n1202:108": "[77] hetau mārga ca duḥkhe ca nirodhe ca yathākramam |",
  "SA14n1202:109": "aṣṭau te sapta pañceti ṣoḍaśeti ca kīrtitāḥ ||4-3 ||",
  "SA14n1202:110": "hetuḥ samudayaḥ |",
  "SA14n1202:111": "ataḥ samudayamārgau prathamata uktau phalopāyatvāt |",
  "SA14n1202:112": "duḥkhanirodhau paścāduktau phalatvāt teṣvākārā yathākramam |",
  "SA14n1202:113": "'aṣṭau sapta pañca ṣoḍaśeti ca kīrtītāḥ' sūtre tatra samudaye'ṣṭau-virāga-asamutthāna-śāntanirdoṣa-niṣkleśa-niḥsattva |",
  "SA14n1202:114": "kathaṃ tadaṣṭau ?",
  "SA14n1202:115": "yato nirdoṣe tritayaḥ-arāga-adveṣa-amoha |",
  "SA14n1202:116": "prāktanā hi pañcaskandhāḥ samudayaḥ |",
  "SA14n1202:117": "rajyante'sminniti rāgaḥ |",
  "SA14n1202:118": "parikalpitaḥ svabhāvo dharmāṇām |",
  "SA14n1202:119": "vigato rāgo'smāditi virāgaḥ samudayaḥ |",
  "SA14n1202:120": "sarvadharmāṇāmavitathatāmiti |",
  "SA14n1202:121": "vitathena kalpitena svabhāvena śūnyatām |",
  "SA14n1202:122": "samutthānaṃ kleśaheturvikalpaḥ |",
  "SA14n1202:123": "tasyāsminnabhāvādasamutthānaḥ samudayaḥ |",
  "SA14n1202:124": "sarvadharmāṇāṃ nirvikalpatāmiti |",
  "SA14n1202:125": "agrāhakatvāt |",
  "SA14n1202:126": "śāntaḥ samudayaḥ |",
  "SA14n1202:127": "nirodha ityarthaḥ |",
  "SA14n1202:128": "tatkutaḥ ? sarveṣāṃ dharmanimittānāṃ dharmapratibhāsānāṃ paramārthapratibhāse'nupalabdheḥ |",
  "SA14n1202:129": "ata eva arāgapāramitā adoṣapāramitā amohapāramitā ca |",
  "SA14n1202:130": "guṇapāramitāmiti rāgadoṣamohakṣayapāramitām |",
  "SA14n1202:131": "sarvakleśābhāvānniṣkleśaḥ samudayaḥ |",
  "SA14n1202:132": "parikalpāsattāmiti grāhakāsattām |",
  "SA14n1202:133": "api ca sarvatra kliṣṭaḥ syād duḥkhī ca (?) |",
  "SA14n1202:134": "tadabhāvānniḥsattvaḥ samudayaḥ |",
  "SA14n1202:135": "bhūtakoṭitāmiti dharmapudgalaśūnyatām |",
  "SA14n1202:136": "mārge sapteti-apramāṇa-antadvayānanugama-asambhinna-aparamṛṣṭa-avikalpa-aprameya-asaṅga |",
  "SA14n1202:137": "apramāṇo mārgaḥ |",
  "SA14n1202:138": "sarvadharmāṇāṃ samutthānasyāsamutthānatāmalokatvamupādāya |",
  "SA14n1202:139": "antadvayānanugamo mārgaḥ |",
  "SA14n1202:140": "sarvadharmeṣvanabhiniveśatāmiti |",
  "SA14n1202:141": "yathāpratibhāsaṃ bhāvasya tacchūnyatayā vā bhāvasyānanugamaḥ |",
  "SA14n1202:142": "asambhinno mārgaḥ |",
  "SA14n1202:143": "asambhedanatāmiti bhedānupalabdhim |",
  "SA14n1202:144": "aparāmṛṣṭo mārgastena hīnayānāspṛhaṇāt |",
  "SA14n1202:145": "avikalpo mārgaḥ |",
  "SA14n1202:146": "vikalpasamatāmiti vikalpānāmanupalabdhim |",
  "SA14n1202:147": "aprameyo mārgaḥ |",
  "SA14n1202:148": "apramāṇadharmatāmupādāyeti |",
  "SA14n1202:149": "apramāṇadharmatālambanatvāt |",
  "SA14n1202:150": "asaṅgo mārgaḥ |",
  "SA14n1202:151": "sarvadharmeṣvasaṅgatāmiti nirupalambhatām |",
  "SA14n1202:152": "duḥkhe pañca-anitya- duḥkha śūnya-anātma-lakṣaṇa |",
  "SA14n1202:153": "sāsravāḥ pañcaskandhā duḥkham |",
  "SA14n1202:154": "tadatrānityaṃ bhavatyeveti (?) |",
  "SA14n1202:155": "sarvadharmāṇāmasaṃskṛtatāmiti yathāpratibhāsamanutpannatām |",
  "SA14n1202:156": "duḥkhaṃ duḥkhaṃ sukhavilakṣaṇatvādākāśavat |",
  "SA14n1202:157": "śūnyaṃ duḥkhaṃ sarvadharmānupalabdheḥ |",
  "SA14n1202:158": "anātmā duḥkhaṃ yathāpratibhāsaṃ sarvadharmeṣvabhiniveśāyogāt |",
  "SA14n1202:159": "trīṇi saṃskṛtalakṣaṇāni |",
  "SA14n1202:160": "jātirjarā'nityatā ca |",
  "SA14n1202:161": "tadabhāvādalakṣaṇaṃ duḥkham |",
  "SA14n1202:162": "anabhinivṛttitāmiti yathāpratibhāsaṃ yathā paramārthaṃ cāsaṃskṛtatām ||",
  "SA14n1202:163": "nirodhe ṣoḍaśa |",
  "SA14n1202:164": "tathā hi nirodhaḥ śūnyataiva viśuddhā |",
  "SA14n1202:165": "na ca śūnyatā bhidyate bhedakānāmanupalabdheḥ |",
  "SA14n1202:166": "tasmādākāśavadanantāparyanto nirodhaḥ |",
  "SA14n1202:167": "anukrameṇa vistāreṇa vā paricchedādyathākramaṃ tataḥ ṣoḍaśa śūnyatāḥ santyekarasāḥ |",
  "SA14n1202:168": "ata āha |",
  "SA14n1202:169": "sarvaśūnyatāpāramiteyamanantāparyantatāmupādāyeti |",
  "SA14n1202:170": "adhyātmaśūnyatāpāramiteyaṃ bahirdhāśūnyatāpāramiteyaṃ yāvadabhāvasvabhāvaśūnyatāpāramitetyādi |",
  "SA14n1202:171": "ataśca nirodhasatye ṣoḍaśākārāḥ |",
  "SA14n1202:172": "iti mārgajñatākārāḥ |",
  "SA14n1202:173": "sarvākārajñatākārāḥ daśottaraṃ śatam |",
  "SA14n1202:174": "yataḥ śāstram-",
  "SA14n1202:175": "[78] smṛtyupasthānamārabhya buddhatvākārapaścimāḥ |",
  "SA14n1202:176": "śiṣyāṇāṃ bodhisattvānāṃ buddhānāṃ ca yathākramam ||4-4 ||",
  "SA14n1202:177": "[79] saptatriṃśaccatustriṃśat triṃśannava ca te matāḥ |",
  "SA14n1202:178": "trisarvajñatvabhedena mārgasatyānurodhataḥ ||4-5 ||",
  "SA14n1202:179": "tānadhikṛtya smṛtyupasthānādītyādikaṃ āparivartasamāpteḥ |",
  "SA14n1202:180": "smṛtyupasthānādibodhipakṣyadharmapāramiteyamiti |",
  "SA14n1202:181": "smṛtyupasthānādayaḥ saptavargā anekaśo vibhaktāḥ saptatriṃśabdodhipakṣyā dharmā bhavanti |",
  "SA14n1202:182": "pratyekaṃ teṣāmanupalambhāttadākārāḥ pāramitāḥ............",
  "SA14n1202:183": "[stutiparivarto nāma navamaḥ ||]"
}