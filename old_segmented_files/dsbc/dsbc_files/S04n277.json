{
  "S04n277:0": "7 tathāgatagotram",
  "S04n277:1": "tato maṃjuśrīkumārabhūto licchavi vimalakīrtimetadavocat-“kulaputra,",
  "S04n277:2": "atha katham bodhisattvo buddhadharmeṣu gati gacchati ?",
  "S04n277:3": "“ āha-'maṃjuśrīḥ;",
  "S04n277:4": "yadā bodhisattvo'gati gacchati tadā bodhisattvo buddhadharmeṣu gati gacchati“ |",
  "S04n277:5": "abravīt-“bodhisattvasya āgatigamanaṃ kim ?“",
  "S04n277:6": "āha-“yadā ( bodhisattvaḥ )",
  "S04n277:7": "paṃcānantarīyāṇāṃ gatigāmī,",
  "S04n277:8": "vyāpādavihiṃsāpradveṣo'pi na bhaviṣyanti |",
  "S04n277:9": "narakagatigāmī ( saḥ)",
  "S04n277:10": ", paraṃ tu sarvakleśavirajāḥ |",
  "S04n277:11": "tiryaggatigāmī tu ( sa )",
  "S04n277:12": "maurkhyāndhakārāpagataḥ |",
  "S04n277:13": "( so )'suragatigāmi ca mānamadadarpavigataḥ ;",
  "S04n277:14": "yamalokagatigāmī sarvapuṇyajñānasaṃbhāropāttavān ;",
  "S04n277:15": "anijyā'rūpyagatigāmī,",
  "S04n277:16": "paraṃ tu tadgatinna samavakramati |",
  "S04n277:17": "“(sa) rāgagatigāmi ca sarvakāmasaṃbhogavīratarāgaḥ ;",
  "S04n277:18": "dveṣagatigāmī sarva sattvāpratihataḥ ;",
  "S04n277:19": "mohagatigāmī sarvadharmeṣu prajñānidhyapticittasamarpitaḥ |",
  "S04n277:20": "“mātsaryagatigāmī kāyajīvitanirapekṣaḥ ( sa )",
  "S04n277:21": "ādhyātmikabāhyāni vastū(-ny-) utsṛjati |",
  "S04n277:22": "duḥśīlagatigāmī,",
  "S04n277:23": "paraṃ tvalpāvadye'pi bhayadarśī ( sa )",
  "S04n277:24": "sarvadhūtaguṇasaṃlekheṣu santiṣṭhate;",
  "S04n277:25": "vyāpādakhilapratighagatigāmī cātyantāvyāpanno maitrīvihārī;",
  "S04n277:26": "kausīdyagatigāmi cāpratiprasrabdho vīryamārabhamāṇaḥ sarvakuśalamūlaparyeṣaṇābhiyukto bhavati |",
  "S04n277:27": "indriyavyabhicāragatigāmi svabhāvasamāpanno'moghadhyānaḥ,",
  "S04n277:28": "dauṣprajñagatigāmī prajñāpāramitāgatimupasaṃkramya, ( sa )",
  "S04n277:29": "sarvalaukikalokottaraśāstrapaṇḍitaḥ |",
  "S04n277:30": "“kuhanalapanākāragatigāmī ca sandhyābhāṣyeṣu kuśalaḥ (sa)",
  "S04n277:31": "upāyakauśalyacaryāniryātaḥ;",
  "S04n277:32": "mānagati darśayan (sa)",
  "S04n277:33": "sarva lokasetuvedikā bhavati,",
  "S04n277:34": "kleśagatigāmī,",
  "S04n277:35": "paraṃ tvatyantasaṃkleśarahitaḥ svabhāvapariśuddhaḥ |",
  "S04n277:36": "“māragatigāmī ca sarvabuddhadharmeṣvaparapraṇeyaḥ;",
  "S04n277:37": "śrāvakagatigāmi (sa)",
  "S04n277:38": "sattvāṃstvaśrutadharma śrāvayati,",
  "S04n277:39": "pratyekabuddhagatigāmī sarvasattvaparipācanārthammahākaruṇādutpannaḥ,",
  "S04n277:40": "daridragatigāmī tvakṣayaparibhogaratnapāṇiḥ ;",
  "S04n277:41": "upahatendriyagatigāmi ( sa )",
  "S04n277:42": "tvabhirūpo lakṣaṇasamalaṃkṛtaḥ,",
  "S04n277:43": "hīnakulīnagatigāmī puṇyajñānasaṃcayena tathāgatavaṃśāt prajāyate ;",
  "S04n277:44": "durbaladurvarṇamandagatigāmī darśanīyo nārāyaṇapratirūpakakāyalābhī |",
  "S04n277:45": "“sarvasattvebhya āturaduḥkhacaryā deśayamāno maraṇabhayasamatikrānttas( sa )",
  "S04n277:46": "sumārita( bhayaḥ )",
  "S04n277:47": "; paribhogagatigāmī sarvāṇveṣaṇarahito'nityatāsaṃjñāyām bahupratyavekṣaṇaḥ,",
  "S04n277:48": "bodhisattvo-'ntaḥpurānekarasān deśayamānaḥ ki tu vivekacārī kāmakardamottīrṇaḥ |",
  "S04n277:49": "dhātvāyatanagatigāmī(sa)",
  "S04n277:50": "dhāraṇīipratilabdho nānāpratibhānavibhūṣitaḥ ;",
  "S04n277:51": "tīrthikagatigāmī tīrthyaḥ ( sa )",
  "S04n277:52": "na bhavati, sarvalokagatigāmi sarvagtyapratinirvartī,",
  "S04n277:53": "nirvāṇagatigāmī saṃsāraprabandhaṃ notsṛjati |",
  "S04n277:54": "maṃjuśrīḥ, ityevaṃ bodhisattvo'gati gacchan buddhadharmeṣu gati gacchati“ |",
  "S04n277:55": "atha licchavirvimalakīrtirmañjuśrīkumārabhūtametadavocat-“mañjuśrīḥ,",
  "S04n277:56": "ki tathāgatagotram ?“ abravīt-",
  "S04n277:57": "“kulaputra, satkāyo hi gotraṃ tathāgatānām |",
  "S04n277:58": "avidyābhavatṛṣṇā hi gotram |",
  "S04n277:59": "rāgadveṣamohacaturviparyāsa pañcanīvaraṇaṣaḍāyatanasaptavijñānasthitya-aṣṭamithyātvanavā'ghāta-vastu daśākuśalakarmapathā hi gotram |",
  "S04n277:60": "kulaputra, idaṃ tathāgatagotram ; saṃkṣepāt ,",
  "S04n277:61": "kulaputra,",
  "S04n277:62": "dvāṣaṣṭirdṛṣṭigatāni hi tathāgatagotram“ |",
  "S04n277:63": "āha-“mañjuśrīḥ,",
  "S04n277:64": "kasmāt samanvāhṛtyaidbhāṣase ?",
  "S04n277:65": "“ abravīt-“kulaputra,",
  "S04n277:66": "asaṃskṛtadarśanasamavrakrāntisthānenānuttarasamyaksambodhicittotpādo'śakyaḥ |",
  "S04n277:67": "kleśākarasaṃskṛtasthānasatyādarśanenānuttarasamyaksambodhicittotpādaḥ śakya |",
  "S04n277:68": "“kulaputra, tadyathāpi nāma jāṃgala pradeśe kusumāni-utpalapadmakumudapuṇḍarīkasaugandhīkāni notpadyante;",
  "S04n277:69": "paṃkapulina utpāditāni cet,",
  "S04n277:70": "kusumāni-utpalapadmakumudapuṇḍarīkasaugandhikānyutpadyante |",
  "S04n277:71": "kulaputra, evamevāsaṃskṛtaniyataprāptisattvebhyo buddhadharmā notpadyante |",
  "S04n277:72": "kleśapaṃkapulinopapannasattvebhyo buddhadharmā utpadyate |",
  "S04n277:73": "“tadyathāpi nāmā'kāśe bījanna virohati,",
  "S04n277:74": "bhuvi paraṃtu vartamānaṃ birohati ;",
  "S04n277:75": "evamevāsaṃskṛtaniyataprāptisattvebhyo buddhadharmo notpadyate ;",
  "S04n277:76": "sumerusamāṃ satkāyadṛṣṭimutpādya bodhicittamutpadyate tataśca buddhadharmā virohanti |",
  "S04n277:77": "“kulaputra, anena paryāyeṇa sarve kleśāstathāgatagotraṃ draṣṭavyāḥ |",
  "S04n277:78": "kulaputra, tadyathāpi nāma mahāsamudre'praviṣṭe,",
  "S04n277:79": "anardhyaratnamanuprāptumaśakyam; evameva,",
  "S04n277:80": "kleśasāgare'praviṣṭe,",
  "S04n277:81": "sarvajñatām tasmādutpādayitumaśakyam“ |",
  "S04n277:82": "atha mahākāśyapaḥ sthaviro maṃjuśrīkumārabhūtāya sādhūkāramadāt-“sādhu, sādhu |",
  "S04n277:83": "maṃjuśrīḥ, idaṃ vacanaṃ suprabhāṣitam ,",
  "S04n277:84": "iadaṃ tattvam |",
  "S04n277:85": "kleśā-s tathāgatagotram ,",
  "S04n277:86": "asmadvidhebhyas-tu bodhicittotpādaśca buddhadharmamabhisamboddhuṃ kathaṃ śakyam ?",
  "S04n277:87": "pañcānantarīyasaṃyogena hi bodhicittotpādaḥ śakyaśca buddhadharmā apyabhisambodhanīyāḥ |",
  "S04n277:88": "tadyathāpi nāma vikalendriyapuruṣāya pañca kāmaguṇā nirguṇāścāsamarthāḥ evameva parivarjitasarvasaṃyojanāya śrāvakāya sarve buddhadharmā nirguṇaścāsamarthā ḥ ;",
  "S04n277:89": "tasmai pratyālambanamasamartham |",
  "S04n277:90": "“maṃjuśrīḥ, ataḥ pṛthagjanāstathāgate kṛtajñāḥ,",
  "S04n277:91": "ki tu śrāvakā akṛtajñāḥ |",
  "S04n277:92": "tat kasya hetoḥ ?",
  "S04n277:93": "yadarthaṃ pṛthagjano buddhaguṇaśravaṇena triratnagotramanucchinnakaraṇārthamanuttarasamyaksambodhicittotpādaṃ karoti;",
  "S04n277:94": "śrāvakastu yāvajjīvam buddhadharmabalavaiśāradyāni śrutvā'pyanuttarasamyaksambodhicittotpāde'samarthaḥ“ |",
  "S04n277:95": "tatassarvarūpasandarśano nāma bodhisattvastasyām parṣadi sannipatito niṣaṇṇo ( 'bhūt ) |",
  "S04n277:96": "sa licchavi vimalakīrtimetadavocat-“gṛhapate,",
  "S04n277:97": "kva te mātāpitarau ca putradārāśca dāsadāsīkarmakarapauruṣeyāḥ ?",
  "S04n277:98": "kva te mitrajñātisālohitāḥ ?",
  "S04n277:99": "tava parivārāśvahastirathapattivāhanāni kva ?",
  "S04n277:100": "“ evamabravīt |",
  "S04n277:101": "licchavirvimalakīrtiḥ sarvarūpasandarśanaṃ bodhisatvamimā gāthā abhāṣata-",
  "S04n277:102": "“viśuddhabodhisattvānāṃ |",
  "S04n277:103": "mātā hi prajñāpāramitā |",
  "S04n277:104": "pitā'styupāyakauśalyam |",
  "S04n277:105": "tābhyāṃ jāyante pariṇāyakāḥ ||",
  "S04n277:106": "dharmaprītirasti patnī |",
  "S04n277:107": "maitrīkaruṇe duhitarau ( teṣāṃ ) |",
  "S04n277:108": "ubhe dharmasatye staḥ putrau |",
  "S04n277:109": "śūnyatā'rthacittirgṛham ||",
  "S04n277:110": "evaṃ hi sarve kleśās ( teṣāṃ ) |",
  "S04n277:111": "yatheṣṭavaśavartiśiṣyāḥ |",
  "S04n277:112": "mitrāṇi bodhyaṃgāni |",
  "S04n277:113": "tairhi bodhirvarāgrotpadyate ||",
  "S04n277:114": "sahāyās- teṣāṃ sadāsaṃvāsāḥ |",
  "S04n277:115": "santi ṣaṭ pāramitāḥ |",
  "S04n277:116": "saṃgrahā nārībhavanāni |",
  "S04n277:117": "saṃgītis ( teṣāṃ )",
  "S04n277:118": "dharmadeśanā ||",
  "S04n277:119": "teṣāmudyānaṃ bhūtikāni |",
  "S04n277:120": "bodhyaṅgapuṣpitam |",
  "S04n277:121": "vimuktijñānam falam |",
  "S04n277:122": "dharmamahādhanaṃ ( santi ) vṛkṣāḥ ||",
  "S04n277:123": "vimokṣā bhavanti puṣkariṇī ( teṣāṃ ) |",
  "S04n277:124": "pūritā samādhijalena |",
  "S04n277:125": "viśuddhapadmenā'cchāditā |",
  "S04n277:126": "( yeṣāṃ ) tasyāṃ prakṣālanaṃ vimalāste ||",
  "S04n277:127": "abhijñās- teṣā vāhanam |",
  "S04n277:128": "mahāyānamanuttaram |",
  "S04n277:129": "sārathi ( -rbhavati )",
  "S04n277:130": "bodhicittaṃ |",
  "S04n277:131": "mārgo hyaṣṭāṅgikaśāntiḥ ||",
  "S04n277:132": "teṣāṃ bibhūṣaṇaṃ ( santi ) lakṣaṇāni |",
  "S04n277:133": "aśītiranuvyañjanāni ca |",
  "S04n277:134": "kuśalā'śayo hrīrapatrapā |",
  "S04n277:135": "santi vastrāṇi teṣām ||",
  "S04n277:136": "saddharmadhanavantaste |",
  "S04n277:137": "prayogasa-( teṣāṃ )",
  "S04n277:138": "dharmadeśanā |",
  "S04n277:139": "pavitrā pratipattirmahālābhaḥ |",
  "S04n277:140": "pariṇāmaṃ ( teṣāṃ )",
  "S04n277:141": "bodhyarthaṃ ||",
  "S04n277:142": "śayanañca bhavanti catvāri dhyānāni |",
  "S04n277:143": "śuddhā'jīvena saṃstṛtāste |",
  "S04n277:144": "jñānaṃ tatprabodhaḥ |",
  "S04n277:145": "sadā śravaṇasamāpannā ( ste ) ||",
  "S04n277:146": "tadāhāraśca bhavatyamṛtaṃ |",
  "S04n277:147": "pānaṃ vimuktirasaḥ |",
  "S04n277:148": "biśuddhābhiprāyo'sti snānaṃ |",
  "S04n277:149": "( teṣāṃ ) śīlaṃ gandhavilepanam ||",
  "S04n277:150": "kleśaśatrūpaghātenātha |",
  "S04n277:151": "ajitavīrāste |",
  "S04n277:152": "caturo'pi mārān pradharṣitavantaḥ |",
  "S04n277:153": "ucchritavanto bodhimaṇḍaladhvajaṃ ||",
  "S04n277:154": "sañcintyaṃ darśayanti jātiṃ |",
  "S04n277:155": "ki cāpi ( te ) 'janmānutpādāḥ |",
  "S04n277:156": "sarvakṣetreṣu cā'bhāsante |",
  "S04n277:157": "sūryo yathā samuditaḥ ||",
  "S04n277:158": "vināyake ( bhyaḥ )",
  "S04n277:159": "sarvapūjanaiḥ |",
  "S04n277:160": "buddhānāṃ koṭyai pūjāṃ kṛtvā |",
  "S04n277:161": "na kadācid ( etad bhavati ) - |",
  "S04n277:162": "'asmā (-bhi) rbuddhebhyaḥ parisevitavyam' ||",
  "S04n277:163": "ki cāpi sattvahitāya |",
  "S04n277:164": "buddhakṣetrāvacarā ( ste ) |",
  "S04n277:165": "(jñātvā) ''kāśopamāni kṣetrāṇi |",
  "S04n277:166": "sattve (-ṣav-) asattvasaṃjñinaḥ ||",
  "S04n277:167": "sarvasattvāna ye rūpā rutaghoṣāśca īritāḥ |",
  "S04n277:168": "ekakṣaṇena darśanti bodhisattvā viśāradāḥ ||",
  "S04n277:169": "mārakarmāṇi ki cāpi jānanti |",
  "S04n277:170": "mārānubandhinaḥ |",
  "S04n277:171": "upāyapāraṃ gatās ( -te ) |",
  "S04n277:172": "tatsarvakriyā darśayanti ||",
  "S04n277:173": "te jīrṇavyādhitā bhonti mṛtamātmāna darśayī |",
  "S04n277:174": "sattvānāṃ paripākāya māyādharma vikrīḍitāḥ ||",
  "S04n277:175": "kalpoddāhaṃ ca darśenti uddahitvā vasundharām |",
  "S04n277:176": "nityasaṃjñina sattvānām anityamiti darśayī ||",
  "S04n277:177": "sattvaiḥ śatasahasrebhirekarāṣṭre nimantritāḥ |",
  "S04n277:178": "sarveṣāṃ gṛha bhuñjanti sarvānnāmanti bodhaye ||",
  "S04n277:179": "ye kecinmantravidyā vā śilpasthānā bahūvidhāḥ |",
  "S04n277:180": "sarvatra pāramiprāptāḥ sarvasattvasukhāvahāḥ ||",
  "S04n277:181": "yāvanto lokapāṣaṇḍāḥ sarvatra pravrajanti te |",
  "S04n277:182": "nānādṛṣṭigataṃ prāptāṃste sattvān paripācati ||",
  "S04n277:183": "candrā vā bhonti sūryā vā śakrabrahmaprajeśvarāḥ |",
  "S04n277:184": "bhavanti āpastejaśca pṛthivī mārutastathā ||",
  "S04n277:185": "roga antarakalpeṣu bhaiṣajyaṃ bhonti uttamāḥ |",
  "S04n277:186": "yena te sattva mucyante sukhī bhonti anāmayāḥ ||",
  "S04n277:187": "durbhikṣāntarakalpeṣu bhavantī pānabhojanam |",
  "S04n277:188": "kṣudhā pipāsāmapanīya dharma deśenti prāṇinām ||",
  "S04n277:189": "śastra antarakalpeṣu maitrīdhyāyī bhavanti te |",
  "S04n277:190": "avyāpāde niyojenti sattvakoṭiśatān bahūn ||",
  "S04n277:191": "mahāsaṃgrāmamadhye ca samapakṣā bhavanti te |",
  "S04n277:192": "sandhisāmagrī rocenti bodhisattvā mahābalāḥ ||",
  "S04n277:193": "ye cāpi nirayāḥ kecidbuddhakṣetreṣvacintiṣu |",
  "S04n277:194": "saṃcintya tatra gacchanti sattvānāṃ hitakāraṇāt ||",
  "S04n277:195": "yāvantyo gatayaḥ kaścittiryagyonau prakāśitāḥ |",
  "S04n277:196": "sarvatra dharma deśenti tena ucyanti nāyakāḥ ||",
  "S04n277:197": "kāmabhogāṃ (-śca )",
  "S04n277:198": "darśenti dhyānaṃ ca dhyāyināṃ tathā |",
  "S04n277:199": "vidhvastamāraṃ kurvanti avatāraṃ na denti te ||",
  "S04n277:200": "agnimadhye yathā padmamabhūtaṃ taṃ vinirdiśet ||",
  "S04n277:201": "evaṃ kāmāṃśca dhyānaṃ ca abhūtaṃ te vidarśayī ||",
  "S04n277:202": "saṃcintya gaṇikāṃ bhonti puṃsāmākarṣaṇāya te |",
  "S04n277:203": "rāgāṅkuraṃ ca saṃlobhya buddhajñāne sthāpayanti te ||",
  "S04n277:204": "grābhikāśca sadā bhonti sārthavāhāḥ purohitāḥ |",
  "S04n277:205": "agrāmātyātha cāmātyaḥ sattvāmāṃ hitakāraṇāt ||",
  "S04n277:206": "daridrāṇāṃ ca sattvānāṃ nidhānā bhonti akṣayāḥ |",
  "S04n277:207": "teṣāṃ dānāani datvā ca bodhicittaṃ janenti te ||",
  "S04n277:208": "mānastabdheṣu sattveṣu mahānagnā bhavanti te ||",
  "S04n277:209": "sarvamānasamuddhataṃ bidhi prārthenti uttamām ||",
  "S04n277:210": "bhayāditānāṃ sattvānāṃ santiṣṭhante'grataḥ sadā |",
  "S04n277:211": "abhayaṃ teṣu datvā ca paripācenti bodhaye ||",
  "S04n277:212": "pañcabhijñāśca te bhūtvā ṛṣayo brahmacāriṇaḥ |",
  "S04n277:213": "śīle sattvān niyojenti kṣāntisauratyasaṃyame ||",
  "S04n277:214": "upasthānaguran sattvān paśyantīha viśāradāḥ |",
  "S04n277:215": "ceṭā bhavanti dāsā vā śiṣyatvamupayānti ca ||",
  "S04n277:216": "yena yenaiva cāṃgena sattvo dharmarato bhavet |",
  "S04n277:217": "darśenti hi kriyāḥ sarvā mahopāyasuśikṣitāḥ ||",
  "S04n277:218": "yeṣām anantā śikṣā hi anantaścāpi gocaraḥ |",
  "S04n277:219": "anantajñānasampannā anantaprāṇimocakāḥ ||",
  "S04n277:220": "na teṣāṃ kalpakoṭībhiḥ kalpakoṭiśatairapi |",
  "S04n277:221": "buddhairapi vadadbhistu guṇāntaḥ suvaco bhavet ||",
  "S04n277:222": "ye'prajñahīnasattvāḥ |",
  "S04n277:223": "sthāpayitvā ( tān ) |",
  "S04n277:224": "asmin dharme śrute |",
