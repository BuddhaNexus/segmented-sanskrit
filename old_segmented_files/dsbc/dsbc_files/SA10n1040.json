{
  "SA10n1040:0": "26",
  "SA10n1040:1": "dvādaśāṅgaparīkṣā ṣaḍviṃśatitamaṃ prakaraṇam |",
  "SA10n1040:2": "punarbhavāya saṃskārānavidyānivṛtastridhā |",
  "SA10n1040:3": "abhisaṃskurute yāṃstairgatiṃ gacchati karmabhiḥ ||1 ||",
  "SA10n1040:4": "vijñānaṃ saṃniviśate saṃskārapratyayaṃ gatau |",
  "SA10n1040:5": "saṃniviṣṭe'tha vijñāne nāmarūpaṃ niṣicyate ||2 ||",
  "SA10n1040:6": "niṣikte nāmarūpe tu ṣaḍāyatanasaṃbhavaḥ |",
  "SA10n1040:7": "ṣaḍāyatanamāgamya saṃsparśaḥ saṃpravartate ||3 ||",
  "SA10n1040:8": "cakṣuḥ pratītya rūpaṃ ca samanvāhārameva ca |",
  "SA10n1040:9": "nāmarūpaṃ pratītyaivaṃ vijñānaṃ saṃpravartate ||4 ||",
  "SA10n1040:10": "saṃnipātastrayāṇāṃ yo rūpavijñānacakṣuṣām |",
  "SA10n1040:11": "sparśaḥ saḥ tasmātsparśācca vedanā saṃpravartate ||5 ||",
  "SA10n1040:12": "vedanāpratyayā tṛṣṇā vedanārthaṃ hi tṛṣyate |",
  "SA10n1040:13": "tṛṣyamāṇa upādānamupādatte caturvidham ||6 ||",
  "SA10n1040:14": "upādāne sati bhava upādātuḥ pravartate |",
  "SA10n1040:15": "syāddhi yadyanupādāno mucyeta na bhavedbhavaḥ ||7 ||",
  "SA10n1040:16": "pañca skandhāḥ sa ca bhavaḥ bhavājjātiḥ pravartate |",
  "SA10n1040:17": "jarāmaraṇaduḥkhādi śokāḥ saparidevanāḥ ||8 ||",
  "SA10n1040:18": "daurmanasyamupāyāsā jāteretatpravartate |",
  "SA10n1040:19": "kevalasyaivametasya duḥkhaskandhasya saṃbhavaḥ ||9 ||",
  "SA10n1040:20": "saṃsāramūlānsaṃskārānavidvān saṃskarotyataḥ |",
  "SA10n1040:21": "avidvān kārakastasmānna vidvāṃstattvadarśanāt ||10 ||",
  "SA10n1040:22": "avidyāyāṃ niruddhāyāṃ saṃskārāṇāmasaṃbhavaḥ |",
  "SA10n1040:23": "avidyāyā nirodhastu jñānenāsyaiva bhāvanāt ||11 ||",
  "SA10n1040:24": "tasya tasya nirodhena tattannābhipravartate |",
  "SA10n1040:25": "duḥkhaskandhaḥ kevalo'yamevaṃ samyaṅ nirudhyate ||12 ||"
}