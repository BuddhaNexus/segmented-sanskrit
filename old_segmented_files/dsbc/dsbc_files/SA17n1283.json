{
  "SA17n1283:0": "samyaksambuddhabhāṣitaṃ pratimālakṣaṇam",
  "SA17n1283:1": "namo buddhāya |",
  "SA17n1283:2": "[evaṃ mayā śrutamekasmin samaye] buddho bhagavān jetavane viharati sma |",
  "SA17n1283:3": "tuṣitavarabhavanāt māturdharmadeśanāgamanakālasamaye śāriputro bhagavantametadavocat |",
  "SA17n1283:4": "bhagavan bhagavatā gate parinirvṛte vā śrāddhaiḥ kulaputraiḥ [kuladuhitṛbhiśca] kathaṃ pratipattavyam |",
  "SA17n1283:5": "bhagavānāha-śāriputra ! mayi gate parinirvṛte vā nyagrodhaparimaṇḍalaṃ kāyaṃ kartavyam |",
  "SA17n1283:6": "yāvatkāyaṃ tāvadvyāmaṃ yāvadvyāmaṃ tāvatkāyaṃ pūjāsatkārārthaṃ pratimā kartavyā |",
  "SA17n1283:7": "sarvāṅgopāṅgāvayavasthaulyalāvaṇyalālityasalīlatvaṃ chatrākāraṃ śiraḥskandhāṃ(dhasu)",
  "SA17n1283:8": "saṃsthitoṣṇīṣatvādisusaṃsthānāt |",
  "SA17n1283:9": "tatrāyāmavistāroccheda(tsedha)",
  "SA17n1283:10": "sandhibandhanirgamaiḥ pramāṇaṃ bodhisattvānāṃ sugatānāñca pravakṣyāmi tacchṛṇu |",
  "SA17n1283:11": "tatra tāvat pramāṇaṃ bodhisattvānāṃ svenāṅgulīpramāṇenaśataṃ viṃśatyuttaram,",
  "SA17n1283:12": "buddhānāṃ pañcaviṃśatyuttaram |",
  "SA17n1283:13": "caturaṅgulamuṣṇīṣaṃ keśasthānaṃ tathaiva ca |",
  "SA17n1283:14": "sārddhatrayodasī(śī)",
  "SA17n1283:15": "mātrā mukhabhāgañca tattrayam ||1 ||",
  "SA17n1283:16": "lalāṭaṃ nāsikāñcādhaścibukāntaṃ tṛtīyakam |",
  "SA17n1283:17": "caturaṅgulaṃ lalāṭaṃ [ca] tulyaṃ nāsikayā bhavet ||2 ||",
  "SA17n1283:18": "sādhikaṃ cibukāntaṃ tu cibukaṃ dvayaṅgulaṃ bhavet |",
  "SA17n1283:19": "āyāmaṃ nirgamāccaiva caturaṅgulamiṣyate ||3 ||",
  "SA17n1283:20": "caturaṅgulau kapolau tu karṇamūlādviniḥśri(sṛ)tau |",
  "SA17n1283:21": "hanuḥ syāttryaṅgulocchedo(tsedho)",
  "SA17n1283:22": "vistāre dvayaṅgulaśca saḥ ||4 ||",
  "SA17n1283:23": "sā'dhikaḥ paripūrṇṇaḥ syānmahāsiṃhahanuryathā |",
  "SA17n1283:24": "adharo dvayaṅgulāyāmo nirgamoccheda(tsedha)mātrikaḥ ||5 ||",
  "SA17n1283:25": "madhye syācchobhanā rekhā sṛkkaṇī mātṛke smṛtau |",
  "SA17n1283:26": "caturaṅgulamāyāmaṃ vaktraṃ kuryādvicakṣaṇaḥ ||6 ||",
  "SA17n1283:27": "yathopapannasthānāścatvāriṃśaddaśanāḥ smṛtāḥ |",
  "SA17n1283:28": "uttaroṣṭho'ṅgulārddhaḥ syāttathaiboccheda(tsedha)nirgamaḥ ||7 ||",
  "SA17n1283:29": "tribhāgāṅgulikā kāryā godhistasyaiva ca sthitā |",
  "SA17n1283:30": "nāsā dvayaṅgulavistārā sārddhamaṅgulamunnatā ||8 ||",
  "SA17n1283:31": "arddhāṅgule same vṛtte nāsāyāḥ śrotasī smṛtau(te) |",
  "SA17n1283:32": "nāsāvaṃśaḥ samo madhye vistāreṇārddhamātrikaḥ ||9 ||",
  "SA17n1283:33": "netrāntaro'ṅgule jñeyo netre ca caturaṅgule |",
  "SA17n1283:34": "vistārāddvayaṅgulau madhye tayostārā tribhāgikī ||10 ||",
  "SA17n1283:35": "dṛṣṭiḥ syātpañcabhāgena dvayaṅgulaṃ tryaṅgulaṃ tayoḥ |",
  "SA17n1283:36": "aṅgulasya caturthāṃśo visṛ(stṛ)",
  "SA17n1283:37": "to'kṣiḥ samudgakaḥ ||11 ||",
  "SA17n1283:38": "padmapatrākṛtiḥ kāryo netrakośo'ṅgulitrayam |",
  "SA17n1283:39": "karavīrasamaṃ sūtraṃ netrayoḥ nāsikāpuṭe ||12 ||",
  "SA17n1283:40": "tārā same ca cibuke sṛkkaṇī pariyojayet |",
  "SA17n1283:41": "antarastu bhruvaḥ kāryaṃ vistṛtaṃ sārddhamaṅgulam ||13 ||",
  "SA17n1283:42": "madhye corṇātra vijñeyā śubhā pūrṇendusannibhā |",
  "SA17n1283:43": "nāsikāvatsa(vaṃśa)",
  "SA17n1283:44": "sūtrorṇā tathā mūrdhva(rdha)",
  "SA17n1283:45": "jasaṃsthitam ||14 ||",
  "SA17n1283:46": "śiromaṇīḥ sa vijñeyaḥ suprabho vimalastathā |",
  "SA17n1283:47": "caturaṅgulamucchedāllalāṭopari mastakam ||15 ||",
  "SA17n1283:48": "chatrākāraṃ śubhannīlaṃ dakṣiṇāvarttastūrdhvajam |",
  "SA17n1283:49": "bhrurekhā syāccaturmātrā karṇāgraṃ cāpi tatsamam ||16 ||",
  "SA17n1283:50": "niḥsṛtau dvayaṅgulau karṇau tayoḥ patrārddhamātrikaḥ |",
  "SA17n1283:51": "ucchedo(tsedho)",
  "SA17n1283:52": "mātriko jñeyaḥ śliṣṭaśrotrārddhamātrikāḥ ||17 ||",
  "SA17n1283:53": "aṅgulasya caturthāṃsaḥ(śaḥ)",
  "SA17n1283:54": "karṇāvarttastu vistaraiḥ |",
  "SA17n1283:55": "sārddhamātre'ṅgule dve syāt karṇastvantarabhāgataḥ ||18 ||",
  "SA17n1283:56": "pārśvau syātāṃ yathāśobhaṃ keśāścāpi tathaiva ca |",
  "SA17n1283:57": "arddhapañcamamātrañca karṇapatramapāṅgataḥ ||19 ||",
  "SA17n1283:58": "karṇātkarṇāntavijñeyo mastako'ṣṭādaśāṅgulaḥ |",
  "SA17n1283:59": "caturdaśāṅgulaṃ pṛṣṭhaṃ tayorantaramiṣyate ||20 ||",
  "SA17n1283:60": "catvāriṃśanmātrañca śiraḥ syātpariṇāhataḥ |",
  "SA17n1283:61": "grīvocchedā(tsedhā)",
  "SA17n1283:62": "ccaturmātrā vistārādaṣṭamātṛkā ||21 ||",
  "SA17n1283:63": "pariṇāhācca kartavyā caturviśatimātṛkā |",
  "SA17n1283:64": "grīvāntānyaṅgulānyaṣṭau skandhāṃso(śo)",
  "SA17n1283:65": "dvādaśāṅgulaḥ ||22 ||",
  "SA17n1283:66": "vināntarāṃśo vṛttaśca skandhaḥ syāllakṣaṇānvitaḥ |",
  "SA17n1283:67": "catvāriṃśatamātrāṇi bāhau cāyāmamiṣyate ||23 ||",
  "SA17n1283:68": "bāhurviśatimātrastu prabāhuḥ ṣoḍaśastathā |",
  "SA17n1283:69": "dvādaśāṅgulahastāgraṃ maṇibandhātprakīrtitaḥ ||24 ||",
  "SA17n1283:70": "kukuṇīmaṇibandhābhyāmaṅgulañcāṅgulaṃ smṛtam |",
  "SA17n1283:71": "bāhau madhyaparikṣepa iṣṭo viṃśatimātṛkaḥ ||25 ||",
  "SA17n1283:72": "prabāhuḥ ṣoḍaśaḥ [śca] syāddviṣaṭko maṇibandhane |",
  "SA17n1283:73": "āyāmaṃ saptakaṃ pāṇau talavistārapañcakam ||26 ||",
  "SA17n1283:74": "śaṅkhañcakraṃ tale nyastaṃ padma cākuliśāṅkuśam |",
  "SA17n1283:75": "sarvalakṣaṇarūpiṇyo le(re)",
  "SA17n1283:76": "khāḥ kāryyāḥ pṛthagvidhāḥ ||27 ||",
  "SA17n1283:77": "pañcāṅgulāyatā madhyā parvārddhonā pradeśinī |",
  "SA17n1283:78": "aṅgulārddhavihīnā tu kartavyā syādanāmikā ||28 ||",
  "SA17n1283:79": "anāmikātaḥ parvonā kartavyā tu kanīyasī |",
  "SA17n1283:80": "triparvāṅgulayaḥ sarvāḥ parvārddhena nakhāḥ[śu]bhāḥ ||29 ||",
  "SA17n1283:81": "maṇibandhopariṣṭāttu so'ṅguṣṭhaścaturaṅgulaḥ |",
  "SA17n1283:82": "tāvāneva parikṣepaḥ parvārddhena nakhaśca saḥ ||30 ||",
  "SA17n1283:83": "aṅguṣṭhāttu pradeśinyā antaraṃ tryaṅgulaṃ smṛtam |",
  "SA17n1283:84": "kanīyasī maṇibandhādbhavetpañcāṅgulāyataḥ ||31 ||",
  "SA17n1283:85": "agrahastaparikṣepo vijñeyo dvādaśāṅgulaḥ |",
  "SA17n1283:86": "dairghyāttṛtīyabhāgaḥ syāt svāṅgulīnāṃ parigrahaḥ ||32 ||",
  "SA17n1283:87": "grīvāhṛdayayormadhye sārddhadvādaśamātrikaḥ |",
  "SA17n1283:88": "hṛnnābhyo[śca] catuścaiva stanayorapi cāntaram ||33 ||",
  "SA17n1283:89": "stanayorupariṣṭācca kakṣe kārye ṣaḍaṅgule |",
  "SA17n1283:90": "tadūrdhvaṃ punarāskandhānnavamātrā prakīrtitā ||34 ||",
  "SA17n1283:91": "uraso'pi ca vistāraḥ pañcaviṃśatimātrikaḥ |",
  "SA17n1283:92": "pariṇāhāduraḥ kāryo vistārāttriguṇaṃ śubham ||35 ||",
  "SA17n1283:93": "stananābhyantare(raṃ)",
  "SA17n1283:94": "caiva ṣoḍaśāṅgulamiṣyate |",
  "SA17n1283:95": "avedhaḥ sandhirandhrābhyāṃ nābhimaṇḍalamaṅgulam ||36 ||",
  "SA17n1283:96": "nābhimadhyāt parikṣepaḥ ṣaṭcatvāriṃśadaṅgulaḥ |",
  "SA17n1283:97": "aṣṭādaśāṅgulaṃ caiva vistāreṇa kaṭirbhavet ||37 ||",
  "SA17n1283:98": "nābhimeḍhrontarañca syāt sārddhadvādaśamātrikaḥ |",
  "SA17n1283:99": "tadarddhena tu meḍhraḥ syādapānapariṇāhataḥ ||38 ||",
  "SA17n1283:100": "pañcamātrāyatau lambau vṛṣaṇau caturaṅgulau |",
  "SA17n1283:101": "pañcamātrāṇi catvāri vistārāyāmatastayoḥ ||39 ||",
  "SA17n1283:102": "ūrū samāhitau kāryau pañcaviṃśatimātrikau |",
  "SA17n1283:103": "suvistāraṃ tayormadhyaṃ māpayeddvādaśāṅgulam ||40 ||",
  "SA17n1283:104": "pariṇāhe'pi kartavyaṃ śubhaṃ ṣaṭtriṃśadaṅgulam |",
  "SA17n1283:105": "madhye................caturaṅgulaṃ tu jānutaḥ ||41 ||",
  "SA17n1283:106": "sandhibandhaścaturmātrā tridvikaṃ jānugulphakam |",
  "SA17n1283:107": "guḍhagulphaṃ sirāsthitvaṃ sukumārau stayau (?) śubhau ||42 ||",
  "SA17n1283:108": "ṛjuvṛttāyate jaṃghā(ghe)",
  "SA17n1283:109": "pañcaviṃśatimātrike |",
  "SA17n1283:110": "tayormadhye pariṇāha ekaviṃśatimātrikaḥ ||43 ||",
  "SA17n1283:111": "caturdaśāṅgulā'yatā gulphāntāścaturaṅgulam |",
  "SA17n1283:112": "gulpho dvādaśakāyāmaḥ pādaḥ pādārddhavistaraḥ ||44 ||",
  "SA17n1283:113": "pārśvau dvayaṅgulavistārau pārṣṇī ca caturaṅgule |",
  "SA17n1283:114": "ṣaḍaṅgulaṃ tva(su)",
  "SA17n1283:115": "vistāraṃ triguṇaṃ pariṇāhataḥ ||45 ||",
  "SA17n1283:116": "pañcāṅgulyo dviparvāṇi parvārddhena nakhāḥ smṛtāḥ |",
  "SA17n1283:117": "pañcāṅgulaṃ parikṣepādaṅguṣṭhastryaṅgulāyataḥ ||46 ||",
  "SA17n1283:118": "aṅguṣṭhakasamā caiva āyāmena pradeśinī |",
  "SA17n1283:119": "ṣoḍaśāṣṭāṣṭabhāgena śeṣā hīnāḥ parasparam ||47 ||",
  "SA17n1283:120": "aṅgulyo mātrikocchre(tse)",
  "SA17n1283:121": "dhādaṅguṣṭhaḥ sārddhamātrikaḥ |",
  "SA17n1283:122": "tatra tāmranakhāḥ sārddhāṃ aṅgulāḥ komalāyatāḥ ||48 ||",
  "SA17n1283:123": "kūrmapṛṣṭhasamau pūrṇau pādau bahiralaṃkṛtau |",
  "SA17n1283:124": "samaśliṣṭānatācchidrau supratiṣṭhataḥ(ṣṭhita) lakṣaṇaiḥ ||49 ||",
  "SA17n1283:125": "tayostalaṃ sucakrādicitrākāraṃ tu kārayet |",
  "SA17n1283:126": "pādāvatra praśaṃsanti sarvajñā hatakilviṣāḥ ||50 ||",
  "SA17n1283:127": "kukkuṭāṇḍaṃ tilākāraṃ caturasraṃ suvartulam |",
  "SA17n1283:128": "sarvasāmānyaliṅgānāṃ mukhametaccaturvidham ||51 ||",
  "SA17n1283:129": "mahānarasurastrīṇāṃ kukkuṭāṇḍaṃ tilākṛtiḥ |",
  "SA17n1283:130": "lāvaṇyaṃ darśanīyaṃ tat kārayet mukhadvayam ||52 ||",
  "SA17n1283:131": "pretabhūtapiśācānāṃ rakṣasāṃ vikṛtākṛtiḥ |",
  "SA17n1283:132": "maṇḍalaṃ caturasraṃ ca kārayettu mukhadvayam ||53 ||",
  "SA17n1283:133": "samā dṛṣṭiḥ prasannā ca buddhānāmavalokane |",
  "SA17n1283:134": "nādho nordhvaṃ na dainyena saṃyuktaṃ sarvadarśinām ||54 ||",
  "SA17n1283:135": " ||iti samyaksambuddhabhāṣitaṃ pratimālakṣaṇaṃ samāptam ||"
}