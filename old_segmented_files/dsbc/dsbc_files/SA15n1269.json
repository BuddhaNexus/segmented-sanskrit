{
  "SA15n1269:0": "atha dvitīyaṃ prakaraṇam |",
  "SA15n1269:1": "pūrvamaṣṭavidhā vādadharmā uktāḥ |",
  "SA15n1269:2": "atha nigraha[sthāna]dharmān vakṣyāmaḥ |",
  "SA15n1269:3": "nanu katame vādadharmāḥ |",
  "SA15n1269:4": "(atrocyate) yathā catvāri mahābhūtāni prajñaptireva |",
  "SA15n1269:5": "kasmāt |",
  "SA15n1269:6": "rūpādidharmatvādeva |",
  "SA15n1269:7": "aparaḥ punarāha |",
  "SA15n1269:8": "catvāri mahābhūtāni tattvataḥ santi |",
  "SA15n1269:9": "kathametajjñātam |",
  "SA15n1269:10": "kāṭhinyaṃ pṛthivīdharmo yāvaccalatvaṃ vāyudharmaḥ |",
  "SA15n1269:11": "tatsaditi jñeyam |",
  "SA15n1269:12": "etacca prativiruddham |",
  "SA15n1269:13": "tasmādvivādaḥ |",
  "SA15n1269:14": "yathā vā |",
  "SA15n1269:15": "pṛthivī śarīrakāraṇameva |",
  "SA15n1269:16": "aparāṇi mahābhūtānyapi tathā |",
  "SA15n1269:17": "atra dūṣaṇam |",
  "SA15n1269:18": "pṛthivyādi sarvavastusādhanasamarthaṃ sat,",
  "SA15n1269:19": "kathaṃ śarīramātraṃ sādhayediti nātra vivādaḥ |",
  "SA15n1269:20": "yadyevaṃ na syāttadā vāda ityucyate |",
  "SA15n1269:21": "nanu kāni nigrahasthānāni |",
  "SA15n1269:22": "(atrocyate) yathā śabdo nityo'mūrtatvādākāśavat |",
  "SA15n1269:23": "atra dūṣaṇam |",
  "SA15n1269:24": "yadyapi śabdo'mūrtaḥ |",
  "SA15n1269:25": "tathāpyaindriyakaḥ,",
  "SA15n1269:26": "saṃpratighaḥ,",
  "SA15n1269:27": "ghaṭavatkṛtakaḥ |",
  "SA15n1269:28": "api tvākāśe 'kṛtake kathaṃ tadṛṣṭāntalābhaḥ |",
  "SA15n1269:29": "etannigrahasthānamityucyate |",
  "SA15n1269:30": "atha ghaṭo mūrta ityanityaḥ śabdasya tvamūrtatvāt kathaṃ tadṛṣṭāntalābhaḥ |",
  "SA15n1269:31": "atra dūṣaṇam |",
  "SA15n1269:32": "śabdo ghaṭabhinno'pyaindriyakaḥ śrāvaṇatvāt |",
  "SA15n1269:33": "tasmādanityaḥ |",
  "SA15n1269:34": "nanu kasyārthasyānigrahasthānatvāpattiḥ |",
  "SA15n1269:35": "saṃskārā vijñānañca kṛtakatvādanityam |",
  "SA15n1269:36": "nirvāṇamakṛtakatvānnityam |",
  "SA15n1269:37": "etadvākyaṃ samyakpadarasam |",
  "SA15n1269:38": "etaducyate 'nigrahasthānam |",
  "SA15n1269:39": "nanu kiṃ vacanaṃ dūṣayitavyam |",
  "SA15n1269:40": "cuayte |",
  "SA15n1269:41": "vākyavaiparītyaṃ,",
  "SA15n1269:42": "asaddhetusthāpanaṃ,",
  "SA15n1269:43": "udāharaṇavaiṣamyañcaitaddūṣayitavyam |",
  "SA15n1269:44": "yatha saṃjñā saṃyojanocchedikā,",
  "SA15n1269:45": "ityukte kaścit pṛcchet |",
  "SA15n1269:46": "kathaṃ saṃjñā samyojanocchedikā |",
  "SA15n1269:47": "jñānasya saṃjñāta utpādaṃ pūrvamanutkā saṃjñāmātrakathanādvākyavaiparītyamitīdaṃ dūṣaṇīyam |",
  "SA15n1269:48": "nanu kathaṃ punaretadvākyamucyate |",
  "SA15n1269:49": "asidvasthāpanānnigrahasthānāpattijñāpanārthamuktam |",
  "SA15n1269:50": "aparañca | anuyojyānanuyogaḥ |",
  "SA15n1269:51": "prativaktavye 'prativaktavyata |",
  "SA15n1269:52": "trirabhihitasya parairavijñātam |",
  "SA15n1269:53": "trirabhihitasya svayamavijñānam |",
  "SA15n1269:54": "etāni nigrahasthānāni |",
  "SA15n1269:55": "anyacca | pareṇa vivadamānastadvikalatāṃ nāvagacchati |",
  "SA15n1269:56": "anyastu vadati |",
  "SA15n1269:57": "eṣo'rthaḥ mithyaiva,",
  "SA15n1269:58": "kiṃ bhavānnopalabhate tadā nigrahasthānam |",
  "SA15n1269:59": "anyacca | parasya samyagarthe doṣasamārope'pi nigrahasthānam |",
  "SA15n1269:60": "anyacca | vādinoktaṃ sarvairvijñātamapyasāveva (prativādī)",
  "SA15n1269:61": "nāvagacchati cettadapi nigrahasthānam |",
  "SA15n1269:62": "praśno'pi tadvat |",
  "SA15n1269:63": "etāni nigrahasthānāni vādasya mahākaṇṭakāni gambhīraduḥkhāni jñeyāni,",
  "SA15n1269:64": "drutañca heyāni |",
  "SA15n1269:65": "nanu praśnāḥ katividhāḥ |",
  "SA15n1269:66": "ucyate |",
  "SA15n1269:67": "trividhāḥ |",
  "SA15n1269:68": "yathā vacanasamaḥ,",
  "SA15n1269:69": "arthasamaḥ,",
  "SA15n1269:70": "hetusamaśca |",
  "SA15n1269:71": "yadi vādinastaistribhiḥ praśnottarāṇi na kurvanti tadvibhrāntam |",
  "SA15n1269:72": "yadyeteṣāṃ trayāṇāmuttarāṇāmanyatamaṃ nyūnaṃ syāttadasampannam |",
  "SA15n1269:73": "yadi vadedahamevamprakārān trīn praśnānnāvagacchāmi mama yathājñānamanyonyaṃ praṣṭavyaṃ, tadā'doṣaḥ |",
  "SA15n1269:74": "vākyasamaḥ yathā |",
  "SA15n1269:75": "ātmā nāstītyukte tadvākyāśrayeṇa praśnaḥ |",
  "SA15n1269:76": "ayaṃ vākyasama ityucyate |",
  "SA15n1269:77": "arthasamaḥ tanmatopādānamevāyamarthasama ityucyate |",
  "SA15n1269:78": "hetusamaḥ | paramanogaterutpādakasya hetorjñāmayaṃ hetusama ityucyate |",
  "SA15n1269:79": "evaṃ sāmarthye satye nigrahasthānamityucyate |",
  "SA15n1269:80": "yadyatidrutaṃ vadecchrotāraśca nāvagaccheyustadapi nigrahasthānam |",
  "SA15n1269:81": "athaitāvamātramaparāṇi vā santi |",
  "SA15n1269:82": "atrocyate |",
  "SA15n1269:83": "santyeva yathā nyūnaṃ,",
  "SA15n1269:84": "adhikam nirarthakaṃ,",
  "SA15n1269:85": "aprāptakālaṃ,",
  "SA15n1269:86": "punaruktaṃ pratijñāsannyāsa ityādīni nigrahasthānānītyucyante |",
  "SA15n1269:87": "yadyevamādi pūrvapakṣī vadet,",
  "SA15n1269:88": "tadā nigrahasthānāpattiḥ |",
  "SA15n1269:89": "atha pratijñāvirodhaḥ |",
  "SA15n1269:90": "yathā vijñānaṃ nityam |",
  "SA15n1269:91": "kasmāt |",
  "SA15n1269:92": "vijñānasya hi dvaividhyam |",
  "SA15n1269:93": "vijñānotpāttirvijñākriyā ca |",
  "SA15n1269:94": "ghaṭasyāpi dvaividhyam,",
  "SA15n1269:95": "ghaṭotpattirghaṭakriyā ca |",
  "SA15n1269:96": "evaṃ vijñānamutpādyamānameva sakriyaṃ tasmānnityam |",
  "SA15n1269:97": "ghaṭasya tūtpattyanantaraṃ sakriyatvam,",
  "SA15n1269:98": "tasmādanityatvam |",
  "SA15n1269:99": "atra dūṣaṇam |",
  "SA15n1269:100": "utpattāveva sakriyatvānnityamiti ceddīpasyāpyutpattāveva sakriyatvānnityatvaprasaṅgaḥ |",
  "SA15n1269:101": "atha dīpaścakṣuṣā dṛṣṭaḥ syāt,",
  "SA15n1269:102": "śabdaśca śravaṇena śrūyata iti kathaṃ dṛṣṭāntopapattiḥ |",
  "SA15n1269:103": "etatpratijñāsannyāsanigrahasthānam |",
  "SA15n1269:104": "aparañca | kecidvadantyātmā nitya iti |",
  "SA15n1269:105": "kathaṃ jñātam |",
  "SA15n1269:106": "anaindriyakatvāt |",
  "SA15n1269:107": "yathā ākāśo'naindriyakatvānnityaḥ |",
  "SA15n1269:108": "atra dūṣaṇam |",
  "SA15n1269:109": "paramāṇavo'nindriyakā api tvanityāḥ |",
  "SA15n1269:110": "atrocyate | ātmā'kṛtakatvānnityaḥ paramāṇavastu kṛtakatvādanityāḥ |",
  "SA15n1269:111": "atra dūṣaṇam |",
  "SA15n1269:112": "anupalabdheriti bhavatā pūrvamuktam |",
  "SA15n1269:113": "adhunā cākṛtakatvādibyucyate |",
  "SA15n1269:114": "ayaṃ pratijñāvirodhaḥ |",
  "SA15n1269:115": "nanūcyate 'haṃ virodhīti cebhdavāṃstu mama vacanaṃ pratikūlayan katham virodhau na syāt |",
  "SA15n1269:116": "kiñca kathametadyuktisaham |",
  "SA15n1269:117": "yadvi viruddhamityucyate mayā,",
  "SA15n1269:118": "sā bhavata eva vacanasya pūrvoktenārthan pratikūlatā |",
  "SA15n1269:119": "tasmādviruddhamityuktam |",
  "SA15n1269:120": "anyacca | bhavatā pūrvamuktamaspaṣṭatvānme saṃśaya utpanna iti |",
  "SA15n1269:121": "nāhaṃ bhavadvirodhītyevaṃ saṃśayena virodhaḥ |",
  "SA15n1269:122": "etadapi nigrahasthānamiti |",
  "SA15n1269:123": " ||iti dvitīyaṃ prakaraṇam ||"
}