{
  "SA07n920:0": "CANTO VI",
  "SA07n920:1": "tato muhūrtābhyudite",
  "SA07n920:2": "jagaccakṣuṣi bhāskare |",
  "SA07n920:3": "bhārgavasyāśramapadaṃ",
  "SA07n920:4": "sa dadarśa nṛṇāṃ varaḥ ||1 ||",
  "SA07n920:5": "suptaviśvastahariṇaṃ",
  "SA07n920:6": "svasthasthitavihaṅgamam |",
  "SA07n920:7": "viśrānta iva yaddṛṣṭvā",
  "SA07n920:8": "kṛtārtha iva cābhavat ||2 ||",
  "SA07n920:9": "sa vismayanivṛttyartha",
  "SA07n920:10": "tapaḥpūjārthameva ca |",
  "SA07n920:11": "svāṃ cānuvartitā rakṣa-",
  "SA07n920:12": "nnaśvapṛṣṭhādavatārat ||3 ||",
  "SA07n920:13": "avatīrya ca pasparśa",
  "SA07n920:14": "nistīrṇamiti vājinam |",
  "SA07n920:15": "chandakaṃ cāvravītprītaḥ",
  "SA07n920:16": "snāpayanniva cakṣuṣā ||4 ||",
  "SA07n920:17": "imaṃ tārkṣyopamajavaṃ",
  "SA07n920:18": "turaṅgamanugacchatā |",
  "SA07n920:19": "darśitā saumya madbhakti-",
  "SA07n920:20": "rvikramaścāyamātmanaḥ ||5 ||",
  "SA07n920:21": "sarvathāsmyanyakāryo'pi",
  "SA07n920:22": "gṛhīto bhavatā hṛdi |",
  "SA07n920:23": "bhartusnehaśca yasyāya-",
  "SA07n920:24": "mīdṛśaḥ śaktireva ca ||6 ||",
  "SA07n920:25": "asnigdho'pi samartho'sti",
  "SA07n920:26": "niḥsāmarthyo'pi bhaktimān |",
  "SA07n920:27": "bhaktimāṃścaiva śaktaśca",
  "SA07n920:28": "durlabhastvadvidho bhuvi ||7 ||",
  "SA07n920:29": "tatprīto'smi tavānena",
  "SA07n920:30": "mahābhāgena karmaṇā |",
  "SA07n920:31": "yasya te mayi bhāvo'yaṃ",
  "SA07n920:32": "phalebhyo'pi parāṅmukhaḥ ||8 ||",
  "SA07n920:33": "ko janasya phalasthasya",
  "SA07n920:34": "na syādabhimukho janaḥ |",
  "SA07n920:35": "janībhavati bhūyiṣṭhaṃ",
  "SA07n920:36": "svajano'pi viparyaye ||9 ||",
  "SA07n920:37": "kulārtha dhāryate putraḥ",
  "SA07n920:38": "poṣārtha sevyate pitā |",
  "SA07n920:39": "āśayācchilaṣyati jaga-",
  "SA07n920:40": "nnāsti niṣkāraṇā svatā ||10 ||",
  "SA07n920:41": "kimuktvā bahu saṃkṣepā-",
  "SA07n920:42": "tkṛtaṃ me sumahatpriyam |",
  "SA07n920:43": "nivartasvāśvamādāya",
  "SA07n920:44": "saṃprāpto'smīpsitaṃ padam ||11 ||",
  "SA07n920:45": "ityuktvā sa mahābāhu-",
  "SA07n920:46": "ranuśaṃsacikīrṣayā |",
  "SA07n920:47": "bhūṣaṇānyavamucyāsmai",
  "SA07n920:48": "saṃtaptamanase dadau ||12 ||",
  "SA07n920:49": "mukuṭāddīpakarmāṇaṃ",
  "SA07n920:50": "maṇīmādāya bhāsvaram |",
  "SA07n920:51": "bruvanvākyamidaṃ tasthau",
  "SA07n920:52": "sāṃditya iva mandaraḥ ||13 ||",
  "SA07n920:53": "anena maṇinā chanda",
  "SA07n920:54": "praṇamya bahuśo nṛpaḥ |",
  "SA07n920:55": "vijñāpyo'muktaviśrambhaṃ",
  "SA07n920:56": "saṃtāpavinivṛttaye ||14 ||",
  "SA07n920:57": "janmamaraṇanāśārtha",
  "SA07n920:58": "praviṣṭo'smi tapovanam |",
  "SA07n920:59": "na khalu svargatarṣeṇa",
  "SA07n920:60": "nāsnehena na manyunā ||15 ||",
  "SA07n920:61": "tadevamabhiniṣkrāntaṃ",
  "SA07n920:62": "na māṃ śocitumarhasi |",
  "SA07n920:63": "bhūtvāpi hi ciraṃ śleṣaḥ",
  "SA07n920:64": "kālena na bhaviṣyati ||16 ||",
  "SA07n920:65": "dhruvo yasmācca viśleṣa-",
  "SA07n920:66": "stasmānmokṣāya me matiḥ |",
  "SA07n920:67": "viprayogaḥ kathaṃ na syād",
  "SA07n920:68": "bhūyo'pi svajanāditi ||17 ||",
  "SA07n920:69": "śokatyāgāya niṣkrāntaṃ",
  "SA07n920:70": "na māṃ śocitumarhasi |",
  "SA07n920:71": "śokahetuṣu kāmeṣu",
  "SA07n920:72": "saktāḥ śocyāstu rāgiṇaḥ ||18 ||",
  "SA07n920:73": "ayaṃ ca kila pūrveṣā-",
  "SA07n920:74": "masmākaṃ niścayaḥ sthiraḥ |",
  "SA07n920:75": "iti dāyādyabhūtena",
  "SA07n920:76": "na śocyo'smi pathā vrajan ||19 ||",
  "SA07n920:77": "bhavanti hyarthadāyādāḥ",
  "SA07n920:78": "puruṣasya viparyaye |",
  "SA07n920:79": "pṛthivyāṃ dharmadāyādāḥ",
  "SA07n920:80": "durlabhāstu na santi vā ||20 ||",
  "SA07n920:81": "yadapi syādasamaye",
  "SA07n920:82": "yāto vanamasāviti |",
  "SA07n920:83": "akālo nāsti dharmasya",
  "SA07n920:84": "jīvite cañcale sati ||21 ||",
  "SA07n920:85": "tasmādadyaiva me śreya-",
  "SA07n920:86": "ścetavyamiti niścayaḥ |",
  "SA07n920:87": "jīvite ko hi viśrambho",
  "SA07n920:88": "mṛtyau pratyarthini sthite ||22 ||",
  "SA07n920:89": "evamādi tvayā saumya",
  "SA07n920:90": "vijñāpyo vasudhādhipaḥ |",
  "SA07n920:91": "prayatethāstathā caiva",
  "SA07n920:92": "yathā māṃ na smaredāpi ||23 ||",
  "SA07n920:93": "api nairguṇyamasmākaṃ",
  "SA07n920:94": "vācyaṃ narapatau tvayā |",
  "SA07n920:95": "nairguṇyāttyajyate snehaḥ",
  "SA07n920:96": "snehatyāgānna śocyate ||24 ||",
  "SA07n920:97": "iti vākyamidaṃ śrutvā",
  "SA07n920:98": "chandaḥ saṃtāpaviklavaḥ |",
  "SA07n920:99": "bāṣpagrathitayā vācā",
  "SA07n920:100": "pratyuvāca kṛtāñjaliḥ ||25 ||",
  "SA07n920:101": "anena ta va bhāvena",
  "SA07n920:102": "bāndhavāyāsadāyinā |",
  "SA07n920:103": "bhartaḥ sīdati me ceto",
  "SA07n920:104": "nadīpaṅka iva dvipaḥ ||26 ||",
  "SA07n920:105": "kasya notpādayedbāṣpaṃ",
  "SA07n920:106": "niścayaste'yamīdṛśaḥ |",
  "SA07n920:107": "ayomaye'pi hṛdaye",
  "SA07n920:108": "kiṃ punaḥ snehaviklave ||27 ||",
  "SA07n920:109": "vimānaśayanārhaṃ hi",
  "SA07n920:110": "saukumāryamidaṃ kva ca |",
  "SA07n920:111": "kharadarbhāṅkuravatī",
  "SA07n920:112": "tapovanamahī kva ca ||28 ||",
  "SA07n920:113": "śrutvā tu vyavasāyaṃ te",
  "SA07n920:114": "yadaśvo'yaṃ mayāhṛtaḥ |",
  "SA07n920:115": "balātkāreṇa tannātha",
  "SA07n920:116": "daivenaivāsmi kāritaḥ ||29 ||",
  "SA07n920:117": "kathaṃ hyātmavaśo jānan",
  "SA07n920:118": "vyavasāyamimaṃ tava |",
  "SA07n920:119": "upānayeyaṃ turagaṃ",
  "SA07n920:120": "śokaṃ kapilavāstunaḥ ||30 ||",
  "SA07n920:121": "tannārhasi mahābāho",
  "SA07n920:122": "vihātuṃ putralālasam |",
  "SA07n920:123": "snigdhaṃ vṛddhaṃ ca rājānaṃ",
  "SA07n920:124": "saddharmamiva nāstikaḥ ||31 ||",
  "SA07n920:125": "saṃvardhanapariśrāntāṃ",
  "SA07n920:126": "dvitīyāṃ tāṃ ca mātaram |",
  "SA07n920:127": "devīṃ nārhasi vismartu",
  "SA07n920:128": "kṛtaghna iva satkriyām ||32 ||",
  "SA07n920:129": "bālaputrāṃ guṇavartī",
  "SA07n920:130": "kulaślādhyāṃ pativratām |",
  "SA07n920:131": "devīmarhasi na tyaktuṃ",
  "SA07n920:132": "klībaḥ prāptāmiva śriyam ||33 ||",
  "SA07n920:133": "putraṃ yāśodharaṃ ślādhyaṃ",
  "SA07n920:134": "yaśodharmabhṛtāṃ varam |",
  "SA07n920:135": "bālamarhasi na tyaktuṃ",
  "SA07n920:136": "vyasanīvottamaṃ yaśaḥ ||34 ||",
  "SA07n920:137": "atha bandhuṃ ca rājyaṃ ca",
  "SA07n920:138": "tyaktumeva kṛtā matiḥ |",
  "SA07n920:139": "māṃ nārhasi vibho tyaktuṃ",
  "SA07n920:140": "tvatpādau hi gatirmama ||35 ||",
  "SA07n920:141": "nāsmi yātuṃ puraṃ śakto",
  "SA07n920:142": "dahyamānena cetasā |",
  "SA07n920:143": "tvāmaraṇye parityajya",
  "SA07n920:144": "sumantra iva rāghavam ||36 ||",
  "SA07n920:145": "kiṃ hi vakṣyati māṃ rājā",
  "SA07n920:146": "tvadṛte nagaraṃ gatam |",
  "SA07n920:147": "vakṣyāmyucitadarśitvā-",
  "SA07n920:148": "tkiṃ tavāntaḥpurāṇi vā ||37 ||",
  "SA07n920:149": "yadapyātthāpi nairguṇyaṃ",
  "SA07n920:150": "vācyaṃ narapatāviti |",
  "SA07n920:151": "kiṃ tadvakṣyāmyabhūtaṃ te",
  "SA07n920:152": "nirdoṣasya muneriva ||38 ||",
  "SA07n920:153": "hṛdayena salajjena",
  "SA07n920:154": "jivhayā sajjamānayā |",
  "SA07n920:155": "ahaṃ yadapi vā brūyāṃ",
  "SA07n920:156": "kastacchraddhātumarhati ||39 ||",
  "SA07n920:157": "yo hi candramasastaikṣṇyaṃ",
  "SA07n920:158": "kathayecchraddadhīta vā |",
  "SA07n920:159": "sa doṣāṃstava doṣajña",
  "SA07n920:160": "kathayecchraddadhīta vā ||40 ||",
  "SA07n920:161": "sānukrośasya satataṃ",
  "SA07n920:162": "nityaṃ karuṇavedinaḥ |",
  "SA07n920:163": "snigdhatyāgo na sadṛśo",
  "SA07n920:164": "nivartasva prasīda me ||41 ||",
  "SA07n920:165": "iti śokābhibhūtasya",
  "SA07n920:166": "śrutvā chandasya bhāṣitam |",
  "SA07n920:167": "svasthaḥ paramayā dhṛtyā",
  "SA07n920:168": "jagāda vadatāṃ varaḥ ||42 ||",
  "SA07n920:169": "madviyogaṃ prati cchanda",
  "SA07n920:170": "saṃtāpastyajyatāmayam |",
  "SA07n920:171": "nānābhāvo hi niyataṃ",
  "SA07n920:172": "pṛthagjātiṣu dehiṣu ||43 ||",
  "SA07n920:173": "svajanaṃ yadyapi snehā-",
  "SA07n920:174": "nna tyajeyamahaṃ svayam |",
  "SA07n920:175": "mṛtyuranyonyamavaśā-",
  "SA07n920:176": "nasmān saṃtyājayiṣyati ||44 ||",
  "SA07n920:177": "mahatyā tṛṣṇayā duḥkhai-",
  "SA07n920:178": "rgarbheṇāsmi yayā dhṛtaḥ |",
  "SA07n920:179": "tasyā niṣphalayatnāyāḥ",
  "SA07n920:180": "kvāhaṃ mātuḥ kva sā mama ||45 ||",
  "SA07n920:181": "vāsavṛkṣe samāgamya",
  "SA07n920:182": "vigacchanti yathāṇḍajāḥ |",
  "SA07n920:183": "niyataṃ viprayogānta-",
  "SA07n920:184": "stathā bhūtasamāgamaḥ ||46 ||",
  "SA07n920:185": "sametya ca yathā bhūyo",
  "SA07n920:186": "vyapayānti balāhakāḥ |",
  "SA07n920:187": "saṃyogo viprayogaśca",
  "SA07n920:188": "tathā me prāṇināṃ mataḥ ||47 ||",
  "SA07n920:189": "yasmādyāti ca loko'yaṃ",
  "SA07n920:190": "vipralabhya paraṃparam |",
  "SA07n920:191": "mamattvaṃ na kṣamaṃ tasmā-",
  "SA07n920:192": "tsvapnabhūte samāgame ||48 ||",
  "SA07n920:193": "sahajena viyujyante",
  "SA07n920:194": "parṇarāgeṇa pādapāḥ |",
  "SA07n920:195": "anyenānyasya viśleṣaḥ",
  "SA07n920:196": "kiṃ punarna bhaviṣyati ||49 ||",
  "SA07n920:197": "tadevaṃ sati saṃtāpaṃ",
  "SA07n920:198": "mā kārṣī saumya gamyatām |",
  "SA07n920:199": "lambate yadi tu sneho",
  "SA07n920:200": "gatvāpi punarāvraja ||50 ||",
  "SA07n920:201": "brūyāścāsmatkṛtāpekṣaṃ",
  "SA07n920:202": "janaṃ kapilavāstuni |",
  "SA07n920:203": "tyajyatāṃ tagdataḥ snehaḥ |",
  "SA07n920:204": "śrūyatāṃ cāsya niścayaḥ ||51 ||",
  "SA07n920:205": "kṣiprameṣyati vā kṛtvā",
  "SA07n920:206": "janmamṛtyukṣayaṃ kila |",
  "SA07n920:207": "akṛtārtho nirārambho",
  "SA07n920:208": "nidhanaṃ yāsyatīti vā ||52 ||",
  "SA07n920:209": "iti tasya vacaḥ śrutvā",
  "SA07n920:210": "kanthakasturagottamaḥ |",
  "SA07n920:211": "jivhayā lilihe pādau",
  "SA07n920:212": "bāṣpamuṣṇaṃ mumoca ca ||53 ||",
  "SA07n920:213": "jālinā svastikāṅkena",
  "SA07n920:214": "cakramadhyena pāṇinā |",
  "SA07n920:215": "āmamarśa kumārastaṃ",
  "SA07n920:216": "babhāṣe ca vayasyavat ||54 ||",
  "SA07n920:217": "muñca kanthaka mā bāṣpaṃ",
  "SA07n920:218": "darśiteyaṃ sadaśvatā |",
  "SA07n920:219": "mṛṣyatāṃ saphalaḥ śīghraṃ",
  "SA07n920:220": "śramaste'yaṃ bhaviṣyati ||55 ||",
  "SA07n920:221": "maṇitsaruṃ chandakahastasaṃsthaṃ",
  "SA07n920:222": "tataḥ sa dhīro niśitaṃ gṛhītvā",
  "SA07n920:223": "kośādasiṃ kañcanabhakticitraṃ",
  "SA07n920:224": "bilādivaśīviṣamudbabarha ||56 ||",
  "SA07n920:225": "niṣkāsya taṃ cotpalapattranīlaṃ",
  "SA07n920:226": "ciccheda citraṃ mukuṭaṃ sakeśam |",
  "SA07n920:227": "vikīryamāṇāṃśukamantarīkṣe",
  "SA07n920:228": "cikṣepa cainaṃ sarasīva haṃsam ||57 ||",
  "SA07n920:229": "pūjābhilāṣeṇa ca bāhumānyā-",
  "SA07n920:230": "ddivaukasastaṃ jagṛhuḥ praviddham |",
  "SA07n920:231": "yathāvadenaṃ divi devasaṅghā",
  "SA07n920:232": "divyairviśeṣairmahayāṃ ca cakruḥ ||58 ||",
  "SA07n920:233": "muktvā tvalaṃkārakalatravattāṃ",
  "SA07n920:234": "śrīvipravāsaṃ śirasaśca kṛtvā |",
  "SA07n920:235": "dṛṣṭvāṃśukaṃ kāñcanahaṃsacinhaṃ",
  "SA07n920:236": "vanyaṃ sa dhīro'bhicakāṅkṣa vāsaḥ ||59 ||",
  "SA07n920:237": "tato mṛgavyādhanapurdivaukā",
  "SA07n920:238": "bhāvaṃ viditvāsya viśuddhabhāvaḥ |",
  "SA07n920:239": "kāṣāyavastro'bhiyayau samīpaṃ",
  "SA07n920:240": "taṃ śākyarājaprabhavo'bhyuvāca ||60 ||",
  "SA07n920:241": "śivaṃ ca kāṣāyamṛṣidhvajaste",
  "SA07n920:242": "na yujyate hiṃsramidaṃ dhanuśca |",
  "SA07n920:243": "tatsaumya yadyasti na saktiratra",
  "SA07n920:244": "mahyaṃ prayacchedamidaṃ gṛhāṇa ||61 ||",
  "SA07n920:245": "vyādho'bravītkāmada kāmamārā-",
  "SA07n920:246": "danena viśvāsya mṛgāgnihanmi |",
  "SA07n920:247": "arthastu śakropama yadyanena",
  "SA07n920:248": "hanta pratīcchānaya śuklametat ||62 ||",
  "SA07n920:249": "pareṇa harṣeṇa tataḥ sa vanyaṃ",
  "SA07n920:250": "jagrāha vāso'śukamutsasarja |",
  "SA07n920:251": "vyādhastu divyaṃ vapureva bibhra-",
  "SA07n920:252": "ttacchuklamādāya divaṃ jagāma ||63 ||",
  "SA07n920:253": "tataḥ kumāraśca sa cāśvagopa-",
  "SA07n920:254": "stasmiṃstathā yāti visismiyāte |",
  "SA07n920:255": "āraṇyake vāsasi caiva bhūya-",
  "SA07n920:256": "stasminnakārṣṭā bahumānamāśu ||64 ||",
  "SA07n920:257": "chandaṃ tataḥ sāśrumukhaṃ visṛjya",
  "SA07n920:258": "kāṣāyasaṃbhṛddhṛtikīrtibhṛtsaḥ |",
  "SA07n920:259": "yenāśramastena yayau mahātmā",
  "SA07n920:260": "saṃdhyābhrasaṃvīta ivoḍurājaḥ ||65 ||",
  "SA07n920:261": "tatastathā bhartari rājyaniḥspṛhe",
  "SA07n920:262": "tapovanaṃ yāti vivarṇavāsasi |",
  "SA07n920:263": "bhujau samutkṣipya tataḥ sa vājibhṛd",
  "SA07n920:264": "bhṛśaṃ vicukrośa papāta ca kṣitau ||66 ||",
  "SA07n920:265": "vilokya bhūyaśca ruroda sasvaraṃ",
  "SA07n920:266": "hayaṃ bhujābhyāmupaguhya kanthakam |",
  "SA07n920:267": "tato nirāśo vilapananmuhurmuhu-",
  "SA07n920:268": "ryayau śarīreṇa puraṃ na cetasā ||67 ||",
  "SA07n920:269": "kvacitpradadhyau vilalāpa ca kvacit",
  "SA07n920:270": "kvacitpracaskhāla papāta ca kvacit |",
  "SA07n920:271": "ato vrajan bhaktivaśena duḥkhita-",
  "SA07n920:272": "ścacāra bavhīravaśaḥ pathi kriyāḥ ||68 ||",
  "SA07n920:273": "iti buddhacarite mahākāvye",
  "SA07n920:274": "chandakanivartano nāma ṣaṣṭhaḥ sargaḥ ||6 ||"
}