{
  "SA20n1347:0": "aṣṭamo'dhikāraḥ",
  "SA20n1347:1": "bodhisattvaparipāke saṃgrahaḥ ślokaḥ |",
  "SA20n1347:2": "rūciḥ prasādaḥ praśamo 'nukampanā",
  "SA20n1347:3": "kṣamātha medhā prabalatvameva ca |",
  "SA20n1347:4": "ahāryatāṅgaiḥ samupetatā bhṛśaṃ",
  "SA20n1347:5": "jinātmaje tatparipākalakṣaṇam ||1 ||",
  "SA20n1347:6": "sumitratāditrayamugravīryatā parārdhaniṣṭhottamadharmasaṃgrahaḥ |",
  "SA20n1347:7": "kṛpālusaddharmamahāparigrahe mataṃ hi samyakparipākalakṣaṇam ||2 ||",
  "SA20n1347:8": "guṇajñatāthāśusamādhilābhitā",
  "SA20n1347:9": "phalānubhūtirmanaso'dhyabheda[dya?]tā |",
  "SA20n1347:10": "jinātmaje śāstari saṃprapattaye",
  "SA20n1347:11": "mataṃ hi samyakparipākalakṣaṇam ||3 ||",
  "SA20n1347:12": "susaṃvṛttiḥ kliṣṭavitarkavarjanā",
  "SA20n1347:13": "nirantarāyo'tha śubhābhirāmatā |",
  "SA20n1347:14": "jīnātmaje kleśavinodanāyatan-",
  "SA20n1347:15": "mataṃ hi samyakparipākalakṣaṇam ||4 ||",
  "SA20n1347:16": "kṛpā prakṛtyā paraduḥkhadarśanaṃ",
  "SA20n1347:17": "nihīnacittasya ca saṃpravarjanam |",
  "SA20n1347:18": "viśeṣagatvaṃ jagadagrajanmatā",
  "SA20n1347:19": "parānukampāparipākalakṣaṇam ||5 ||",
  "SA20n1347:20": "dhṛtiḥ prakṛtyā pratisaṃkhyabhāvanā",
  "SA20n1347:21": "sudaḥkhaśītādyadhivāsanā sadā |",
  "SA20n1347:22": "viśeṣagāmitvaśubhābhirāmatā",
  "SA20n1347:23": "mataṃ kṣamāyāḥ paripākalakṣaṇam ||6 ||",
  "SA20n1347:24": "vipākaśuddhiḥ śravaṇādyamoṣatā",
  "SA20n1347:25": "praviṣṭatā sūktadurūktayostathā |",
  "SA20n1347:26": "smṛtermahābuddhayudaye ca yogyatā",
  "SA20n1347:27": "sumedhatāyāḥ paripākalakṣaṇam ||7 ||",
  "SA20n1347:28": "śubhadvayena dvayadhātupuṣṭatā phalodaye cāśrayayogyatā parā |",
  "SA20n1347:29": "manorathāptirjagadagrabhūtatā balopalambhe paripākalakṣaṇam ||8 ||",
  "SA20n1347:30": "sudharmatāyuktivicāraṇāśayo",
  "SA20n1347:31": "viśeṣalābhaḥ parapakṣadūṣaṇam |",
  "SA20n1347:32": "punaḥ sadā māranirantarāyatā",
  "SA20n1347:33": "ahāryatāyāḥ paripākalakṣaṇam ||9 ||",
  "SA20n1347:34": "śubhācayo 'thāśrayayatnayogyatā",
  "SA20n1347:35": "vivekatodagraśubhābhirāmatā |",
  "SA20n1347:36": "jinātmaje hyaṅgasamanvaye puna-",
  "SA20n1347:37": "rmataṃ hi samyakparipākalakṣaṇam ||10 ||",
  "SA20n1347:38": "iti navavidhavastupācitātmā",
  "SA20n1347:39": "paraparipācanayogyatāmupetaḥ |",
  "SA20n1347:40": "śubha[dharma]mayasatatapravardhitātmā",
  "SA20n1347:41": "bhavati sadā jagato 'grabandhubhūtaḥ ||11 ||",
  "SA20n1347:42": "vraṇe'pi bhojye paripāka iṣyate yathaiva tatsrāvaṇabhogayogyatā |",
  "SA20n1347:43": "tathāśraye'smindvayapakṣaśāntatā[tāṃ]tathopabhogatvasuśāntapakṣatā",
  "SA20n1347:44": "[muśantipakvatām] ||12 ||",
  "SA20n1347:45": "vipācanoktā paripācanā tathā",
  "SA20n1347:46": "prapācanā cāpyanupācanāparā |",
  "SA20n1347:47": "supācanā[cā]pyadhipācanā matā",
  "SA20n1347:48": "nipācanotpācananā ca dehiṣu ||13 ||",
  "SA20n1347:49": "hitāśayeneha yathā jinātmajo",
  "SA20n1347:50": "vyavasthitaḥ sarvajagadvipācayan |",
  "SA20n1347:51": "tathā na mātā na pitā na bandhavaḥ",
  "SA20n1347:52": "suteṣu bandhuṣvapi suvyavasthitāḥ ||14 ||",
  "SA20n1347:53": "tathājano nātmani vatsalo mataḥ",
  "SA20n1347:54": "kuto'pi susnigdhaparāśraye jane |",
  "SA20n1347:55": "yathā kṛpātmā parasatvavatsalo",
  "SA20n1347:56": "hite sukhe caiva niyojanātmataḥ ||15 ||",
  "SA20n1347:57": "na bodhisattvasya śarīrabhogayoḥ pareṣvadeyaṃ punarasti sarvathā |",
  "SA20n1347:58": "anugraheṇa dvividhena pācayan paraṃ samairdānaguṇairna tṛpyate ||16 ||",
  "SA20n1347:59": "sadāprakṛtyādhyavihiṃsakaḥ svayaṃ",
  "SA20n1347:60": "rato'pramatto'tra paraṃ niveśayan |",
  "SA20n1347:61": "paraṃparānugrahakṛt dvidhā pare",
  "SA20n1347:62": "vipākaniṣyandaguṇena pācakaḥ ||17 ||",
  "SA20n1347:63": "pare'pakāriṇyupakāribuddhimān",
  "SA20n1347:64": "pramarṣayannugramapi vyatikramam |",
  "SA20n1347:65": "upāyacittairapakāramarṣaṇaiḥ",
  "SA20n1347:66": "śubhe samādāpayate'pakāriṇaḥ ||18 ||",
  "SA20n1347:67": "punaḥ sa yatnaṃ paramaṃ samāśrito",
  "SA20n1347:68": "na khidyate kalpasahasrakoṭibhiḥ |",
  "SA20n1347:69": "jinātmajaḥ sa[ttva]gaṇaṃ prapācayan",
  "SA20n1347:70": "paraikacittasya śubhasya kāraṇāt ||19 ||",
  "SA20n1347:71": "vaśitvamāgamya manasyanuttaraṃ",
  "SA20n1347:72": "paraṃ samāvarjayate'tra śāsane |",
  "SA20n1347:73": "nihatya sarvāmavamānakāmatāṃ",
  "SA20n1347:74": "śubhena saṃvardhayate ca taṃ punaḥ ||20 ||",
  "SA20n1347:75": "sa tatvabhāvārthanaye suniścitaḥ karoti satvānsuvinīta saṃśayān |",
  "SA20n1347:76": "tataśca te tajjinaśāsanādarād vivardhayante svaparaṃ guṇaiḥ śubhaiḥ ||21 ||",
  "SA20n1347:77": "iti sugatigatau śubhatraye vā jagadakhilaṃ kṛpayā sa bodhisattvaḥ |",
  "SA20n1347:78": "tanuparamavimadhyamaprakārairvinayati lokasamānabhāvagatyā ||22 ||",
  "SA20n1347:79": " || mahāyānasūtrālaṃkāre paripākādhikāro'ṣṭamaḥ ||"
}