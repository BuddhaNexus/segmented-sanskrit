{
  "S04n300:0": "4 arciṣmatī nāma caturthī bhūmiḥ |",
  "S04n300:1": "upakramagāthāḥ |",
  "S04n300:2": "evaṃ śrūṇitva caraṇaṃ vipulaṃ",
  "S04n300:3": "bhūmyuttamaṃ manuramaṃ pravaram |",
  "S04n300:4": "saṃharṣitā jinasutāttamanā",
  "S04n300:5": "abhyokiranti kusumebhi jinam || 1 ||",
  "S04n300:6": "saṃkampitā lavaṇatoyadharā",
  "S04n300:7": "iha dharmadeśanamudīrayatām |",
  "S04n300:8": "marukanyakā abhimanorucirāḥ",
  "S04n300:9": "saṃgītiyukta varadharmaratāḥ || 2 ||",
  "S04n300:10": "vaśavarti devapatirāttamanā",
  "S04n300:11": "maṇiratna divya sugatasya kṣipī |",
  "S04n300:12": "vācaṃ abhāṣi atha eva jino",
  "S04n300:13": "utpanna artha guṇapāragato || 3 ||",
  "S04n300:14": "kiṃ kāraṇaṃ tatha hi dharmavaraṃ",
  "S04n300:15": "saṃbodhisattvacaraṇaṃ paramam |",
  "S04n300:16": "bhūmirvidū na iyamadya śrutā",
  "S04n300:17": "yasyāśravo durlabha kalpaśataiḥ || 4 ||",
  "S04n300:18": "bhūyaḥ prabhāṣa naradevahitā",
  "S04n300:19": "caryāvarāṃ jinasutān vidū |",
  "S04n300:20": "śroṣyanti te marutasaṃghagaṇā",
  "S04n300:21": "bhūtaṃ viniścayamananyapadam || 5 ||",
  "S04n300:22": "vimukticandraḥ punarvīro ālapī sugatātmajam |",
  "S04n300:23": "caturthī saṃkramantānāṃ gocaraṃ bhaṇa uttamam || 6 ||",
  "S04n300:24": "upasaṃhāragāthāḥ |",
  "S04n300:25": "parikarmitā tṛtīyabhūmiprabhaṃkarāya",
  "S04n300:26": "sattvacaryaloka tatha dharma vicāryamāṇaḥ |",
  "S04n300:27": "ākāśadhātu manadhātu trayaśca dhātu",
  "S04n300:28": "adhimukti āśaya viśuddhi samākramanti || 7 ||",
  "S04n300:29": "sahaprāptu arciṣmati bhūmi mahānubhāvaḥ",
  "S04n300:30": "saṃvṛttu śāstu kulu bhūyu vivartiyatve |",
  "S04n300:31": "abhedya buddharatane tatha dharmasaṃghe",
  "S04n300:32": "udayavyayasthiti nirīhaka prekṣamāṇaḥ || 8 ||",
  "S04n300:33": "lokapravṛtti kriyakarma bhavopapattiṃ",
  "S04n300:34": "saṃsāranirvṛtivibhāvana kṣetrasattvān |",
  "S04n300:35": "dharmāñca pūrvamaparānta kṣayānutpādaṃ",
  "S04n300:36": "saṃvṛttu bhāvayati śāstu kulānuvartī || 9 ||",
  "S04n300:37": "so eṣu dharmu samupetu hitānukampī",
  "S04n300:38": "bhāveti kāyamapi vedana cittadharmān |",
  "S04n300:39": "adhyātmabāhyubhayathā vidu bhāvayāti",
  "S04n300:40": "smṛtyopasthānabhāvana niketavarjitā || 10 ||",
  "S04n300:41": "pāpakṣayātkuśaladharmavivardhitā ca",
  "S04n300:42": "samyakprahāṇa caturo vidu bhāvayanti |",
  "S04n300:43": "catuṛddhipāda bala indriya bhāvayanti",
  "S04n300:44": "bodhyaṅgaratna ruciraṃ tatha mārga śreṣṭham || 11 ||",
  "S04n300:45": "bhāventi tān janayatāṃ samavekṣya buddhim",
  "S04n300:46": "upastambhayanti praṇidhiṃ kṛtapūrvamaitrāḥ |",
  "S04n300:47": "sarvajñajñānamabhiprārthana buddhakṣetraṃ",
  "S04n300:48": "balaśreṣṭhamuttamapathaṃ anucintayantaḥ || 12 ||",
  "S04n300:49": "vaiśāradaṃ api ca dharma ahārya śāstuḥ",
  "S04n300:50": "varavuddhaghoṣamabhiprārthayamāna dhīrāḥ |",
  "S04n300:51": "gambhīramārgaratanaṃ ca vimokṣasthānaṃ",
  "S04n300:52": "mahatāmupāya samudāgama bhāvayanti || 13 ||",
  "S04n300:53": "satkāyadṛṣṭivigatāśca dviṣaṣṭidṛṣṭī",
  "S04n300:54": "attāttamīyavigatāstatha jīvalābham |",
  "S04n300:55": "skandhāstu dvāra tatha dhātuniketasthānaṃ",
  "S04n300:56": "sarvaprahāṇa viduṣaṃ catuthāya bhūmyām || 14 ||",
  "S04n300:57": "so yānimāni sugatena vivarṇitāni",
  "S04n300:58": "karmāṇi kleśasahajāni anarthakāni |",
  "S04n300:59": "tāni prahāya vidu āśayato viśuddhā",
  "S04n300:60": "dharmārabhanti kuśalaṃ jaga–tāyaṇārtham || 15 ||",
  "S04n300:61": "susnigdhacitta bhavatī vidu apramatto",
  "S04n300:62": "mṛducittu sārjava hitāsukhaāvahaśca |",
  "S04n300:63": "aparikliṣṭaśca parimārgati uttamārthaṃ",
  "S04n300:64": "jñānābhiṣekamabhilāṣi jagārthacārī || 16 ||",
  "S04n300:65": "gurugauraveṣupagataḥ pratipattikāmo",
  "S04n300:66": "bhavate kṛtajña sumanāśca akūhakāśca |",
  "S04n300:67": "nirmāyatāgahana āśayasūrataśca",
  "S04n300:68": "avivartyavīryu bhavate samudānayantaḥ || 17 ||",
  "S04n300:69": "tasyātra bhūmi rucirāya pratiṣṭhitasya",
  "S04n300:70": "adhyāśayaṃ api ca śuddhamupeti dharmam |",
  "S04n300:71": "adhimukti tapyati vivardhati śukladharmo",
  "S04n300:72": "malakalmaṣaṃ vimati śaṃśaya sarva yānti || 18 ||",
  "S04n300:73": "atra sthitā naravararṣabha bodhisattvāḥ",
  "S04n300:74": "sugatānanekanayutānabhipūjayanti |",
  "S04n300:75": "śṛṇvanti dharma yatha śāsani pravrajanti",
  "S04n300:76": "asaṃhārya śakya kṛtakāñcanabhūṣaṇaṃ vā || 19 ||",
  "S04n300:77": "atra sthitāna vidunā guṇamāśayaṃ ca",
  "S04n300:78": "jñānaṃ upāya caraṇaṃ ca viśuddhimārgaḥ |",
  "S04n300:79": "no śakyu māranayutebhi nivartanāya",
  "S04n300:80": "ratnaprabheva yatha varṣajalairahāryā || 20 ||",
  "S04n300:81": "atra sthitā naramarudgaṇapūjanārhā",
  "S04n300:82": "bhontī suyāmapatirīśvara dharmacārī |",
  "S04n300:83": "sattvāni dṛṣṭigahanādvinivartayanti",
  "S04n300:84": "saṃbhārayanti kuśalā jinajñānahetoḥ || 21 ||",
  "S04n300:85": "viryopapeta śatakoṭi mararṣabhāṇāṃ",
  "S04n300:86": "paśyantyananyamanasaḥ susamāhitatvāt |",
  "S04n300:87": "tata uttariṃ bahukalpamabhinirharanti",
  "S04n300:88": "jñānākarā praṇidhiśreṣṭha guṇārthacārī || 22 ||",
  "S04n300:89": "caturthī itiyaṃ bhūmirviśuddhā śubhacāriṇī |",
  "S04n300:90": "guṇārthajñānayuktānāṃ nirdiṣṭā sugatātmajāḥ || 23 ||"
}