{
  "V05n2894:3": "Saddharma-pārājikā ||",
  "V05n2894:13": "namaḥ śrī vajrasattvāya ||",
  "V05n2894:20": "sarvabuddhaṃ namasyāmi sarvasattvārthakāraṇāt |",
  "V05n2894:24": "sarvakarmaviśuddhyarthaṃ sarvaduḥkhopaśāntaye ||",
  "V05n2894:31": "yasyābhavadvai karuṇā triloke lokasya duḥkhārṇavaśoṣaṇāntam |",
  "V05n2894:35": "śauddhodaniṃ pāragasaṃbhavābdhe sambuddhamāryaṃ",
  "V05n2894:36": "sugataṃ namāmi ||",
  "V05n2894:43": "na praṇaśyanti karmāṇi kalpakoṭiśatairapi |",
  "V05n2894:47": "sāmagrīṃ prāpya kālaṃ ca phalanti khalu dehinām ||",
  "V05n2894:54": "kṛtvā budho'lpamapi pāpamadhaḥ prayāti |",
  "V05n2894:58": "kṛtvā buddho mahadapi prajahātyanāthaḥ ||",
  "V05n2894:64": "majja ( ? )",
  "V05n2894:65": "tyayālpamapi vāriṇīsahitahi || ( ? )",
  "V05n2894:69": "pattrikṛtaṃ mahadapi plutatatadeva ||",
  "V05n2894:73": "kṛtāni karmāṇi sudāruṇāni tanva ( nvī )",
  "V05n2894:74": "bhavantyātmanavi ( ni ) graheṇa ||",
  "V05n2894:81": "prakāśanā saṃvaraṇā ( ca )",
  "V05n2894:82": "va teṣāmatyantamūlādharamāvadāmi ( mūloddharaṇaṃ vadāmi )",
  "V05n2894:86": "mañjuśrīruvācahna",
  "V05n2894:90": "bhagavannanāgate'dhvani kaliyugeṣu satvānām |",
  "V05n2894:94": "kukarmavipākajaṃ duḥkhaṃ kathaṃ śuddhyati ||",
  "V05n2894:101": "śrībhagavānuvācahna",
  "V05n2894:105": "sādhu sādhu ca mañjuśri ,",
  "V05n2894:106": "sādhu sādhu ca suṣṭhu ca ,",
  "V05n2894:107": "manasi kuru bhāṣiṣye |",
  "V05n2894:111": "bhavedvādaśava ( rṣe )",
  "V05n2894:112": "ṇa arhat-ghātapātakam ||",
  "V05n2894:119": "mucyate pātakat ghojjāpadhyānādi ( dyu ) poṣaṇaiḥ |",
  "V05n2894:123": "bhavecca daśavarṣeṇa brahmaghātapātakam ||",
  "V05n2894:130": "mucyate pātakaṃ krūraṃ mantrajāpādibhāvanaiḥ |",
  "V05n2894:134": "bhavecca kṣatriyaṃ hatvā aṣṭavarṣeṇa muñcati ||",
  "V05n2894:138": "dānādiśīlarakṣaṇā ( t )",
  "V05n2894:139": "pāpaṃ śuddhyati , nānyathā | ( 15 )",
  "V05n2894:152": "vaiśyasya ṣaṣṭhavarṣeṇa ca kṛtapātakam |",
  "V05n2894:156": "tasya śuddhyati dānena saṃvareṇa viśeṣataḥ ||",
  "V05n2894:163": "śaudrāṇāñca bhavet hatvā pañcavarṣeṇa mucyate |",
  "V05n2894:167": "nigraheṇa tu svātmānaṃ ,",
  "V05n2894:168": "pāpaṃ naśyati , nānyathā ||",
  "V05n2894:175": "goghātasya bhavet hatvā ( ntā )",
  "V05n2894:176": "caturvarṣeṇa śuddhyati |",
  "V05n2894:180": "sarvadharmaṃ samāśritya sarvarāgavirāgataḥ ||",
  "V05n2894:187": "etena arhatghātakādipātakaśuddhiḥ |",
  "V05n2894:191": "cāṇḍālādisatvena keśādikarṣaṇaṃ yadā ||",
  "V05n2894:198": "tadā śuddhyati śīlena parivartanatrayeṇa tu |",
  "V05n2894:202": "tatkuleṣu yadā bhraṣṭaḥ śuddhyati dinaviṃśatyā ||",
  "V05n2894:206": "tribhistu śuddhyate śīlaiḥ parivartasaptakena tu |",
  "V05n2894:214": "etena kulabhraṣṭādiśuddhiḥhna",
  "V05n2894:221": "ekadivasamāśritya velāhālanirāmiṣaṃ ( nirāhāraṃ / nirāmiṣam ) |",
  "V05n2894:225": "stūpaṃ pradakṣiṇīkṛtya sa gaccheccharaṇaṃ",
  "V05n2894:226": "trayam ||",
  "V05n2894:233": "dvitīye ( yaṃ )",
  "V05n2894:234": "divasamāśritya na kṣetrāhārasamācaret |",
  "V05n2894:238": "saddharmapāṭhakaṃ kṛtvā pāpādipratideśanaiḥ ||",
  "V05n2894:245": "tṛtīyaṃ divasamāśritya nirvikalpamayācitam |",
  "V05n2894:249": "mucyate sarvapāpena mantrajāpādikarmaṇā ||",
  "V05n2894:256": "caturthadivasamāśritya nirāhārasamācaret |",
  "V05n2894:260": "bhāvyagurūpadeśenameteparivartamekavid ||",
  "V05n2894:267": "tīrtheṣu snāpayennityaṃ caityādikaraṇena ca |",
  "V05n2894:271": "pūjayitvā vidhānena stotrapāṭhaviśeṣataḥ ||",
  "V05n2894:278": "vāpīkūpapraṇālīṃ ca icchādrumapraropaṇaiḥ |",
  "V05n2894:282": "hastyaśvakharaṇāvoṣṭrayānavāhanadānakam ||",
  "V05n2894:286": "bhūstrīsuvarṇaratnāni cānnapānābhayāni vai | ( 16 )",
  "V05n2894:299": "kṛtāni karmāṇi sudāruṇāni tannayatyātmavigarhaṇena |",
  "V05n2894:303": "prakāśanā samvaraṇā ca teṣāmatyantamūloddharaṇāṃ",
  "V05n2894:304": "vadāmi ||",
  "V05n2894:311": "etena sarvasya kukarmaja-vipākaśuddhiḥ |",
  "V05n2894:315": "idāniṃ pañcagavyasādhanasya avasaraḥ prāptaḥ ||",
  "V05n2894:322": "gomūtraṃ gomayaṃ kṣīraṃ dadhi sarpi kuśodakam |",
  "V05n2894:326": "nirdiṣṭaṃ pañcagavyaṃ tu pavitraṃ kāyaśodhakam ||",
  "V05n2894:333": "mūtrantu nīlavarṇāyāḥ ,",
  "V05n2894:334": "svetāyā gṛhyate dadhi |",
  "V05n2894:338": "kapilāyāṃ ghṛtaṃ grāhyaṃ ,",
  "V05n2894:339": "mahāpātakanāśanam ||",
  "V05n2894:346": "abhāve sarvavarṇānāṃ kapilāyāṃ viśeṣataḥ |",
  "V05n2894:350": "gomūtrasya palaṃ grāhyaṃ palemakaṃ tu gomayam ||",
  "V05n2894:357": "kṣīrasaptagrahaṃ dadyāt dadhi pañcapalāni ca |",
  "V05n2894:361": "ājyasyaikapalaṃ grāhayaṃ palemakaṃ kuśodakam ||",
  "V05n2894:368": "gomayaṃ ca dadhi sarpiḥ kuśodakena miśrayet |",
  "V05n2894:372": "mantreṇādhiṣṭhitaṃ kuryāt kalpoktavidhinā gataḥ ||",
  "V05n2894:373": "( kalpoktanidhi rāgataḥ )",
  "V05n2894:380": "bhāvyaṃ gurūpadeśena dadyātīrthombunā ( tīrthāmbunā ? ) saha | ||",
  "V05n2894:384": "tatrāyam mantraḥ ||",
  "V05n2894:391": "oṃ amoghapariśuddhaśodhāya samantena dhīra-aśuddhasatva",
  "V05n2894:392": "mahāpadye hu |",
  "V05n2894:396": "aṣṭāviṃśākṣaraṃ mantraṃ aṣṭottaraśataṃ japet |",
  "V05n2894:400": "ekaviṃśativārāya āryamahāpātakanāśanam ||",
  "V05n2894:404": "adhyeṣaṇā ||",
  "V05n2894:411": "sarvapāpavināśārthaṃ pūtāya pavitrāya ca |",
  "V05n2894:415": "mahākāruṇikā ,",
  "V05n2894:416": "nātha dehi me pañcagavyakam || ( durgateḥ )",
  "V05n2894:420": "mahākāruṇikā ,",
  "V05n2894:421": "nātha dehi me pañcagavyakam |",
  "V05n2894:425": "aśeṣajinasaṃbhūta sarvadhātuviśodhakam ||",
  "V05n2894:429": "mahākāruṇikā ,",
  "V05n2894:430": "nātha dehi me pañcagavyakam |",
  "V05n2894:434": "gaṇajyeṣṭhasya hastena dadyācca gavyapañcakam || ( 17 )",
  "V05n2894:447": "etena śuddhyate kāyaḥ dadyādbhojyaṃ gaṇāya ca |",
  "V05n2894:451": "pūjayecca yathāśaktyā cīvarādiviśeṣataḥ ||",
  "V05n2894:458": "pūjyaṃ pañcopacāreṇa kāyavākbhakticetasā |",
  "V05n2894:462": "prayājādyādikaṃ karma krameṇa dviguṃ matam ||",
  "V05n2894:469": "pravartyakhaṇḍayeddanaiḥ dānabaddhapradakṣiṇaiḥ |",
  "V05n2894:473": "ekāṃśaṃ khaṇḍayeddānaiḥ ekāṃśaṃ tu pradakṣiṇaiḥ ||",
  "V05n2894:480": "śeṣāṇāṃ kramadviguṇāṃ pāṭhajāpadhyānakarmaṇā ||",
  "V05n2894:484": "āryasaddharmatripiṭakāduddhṛtasatvasya",
  "V05n2894:485": "kukarmajavipākaśuddhi prāyaścintavidhiḥ samāptamiti ||",
  "V05n2894:492": "pratyekādhiṣṭhānamantrāḥ ||",
  "V05n2894:496": "oṃ hū trā hrī kha h ||",
  "V05n2894:500": "pūrvoktamantreṇa mīlayediti ||",
  "V05n2894:504": "pañcagavyasthāpanā ||",
  "V05n2894:508": "bhūmadhye pañcamaṇḍalaṃ kṛtvā tatra madhye",
  "V05n2894:509": "gomayaṃ sthāpya pūrve gomūtraṃ bhavet ,",
  "V05n2894:510": "dakṣiṇe dadhi ,",
  "V05n2894:511": "paścime dugdham ||",
  "V05n2894:515": "uttare goghṛtaṃ bhavet ||",
  "V05n2894:519": "madhye ca kuśodakamiti || śubham ||",
  "V05n2894:525": "( 18 )"
}