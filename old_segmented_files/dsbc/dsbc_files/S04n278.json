{
  "S04n278:0": "8 advayadharmamukhapraveśaḥ",
  "S04n278:1": "atha licchavirvimalakīrtistān bodhisattvānetadavocat-“satpuruṣāḥ,",
  "S04n278:2": "kimasti bodhisattvānāmadvayadharmamukhapraveśaḥ ?",
  "S04n278:3": "astu svabhidhānam“ |",
  "S04n278:4": "dharmavikurvaṇo nāma bodhisattvastatra tasmin saṃnipāta etadavocat- “kulaputra,",
  "S04n278:5": "utpādabhaṅgau hi dvayam ;",
  "S04n278:6": "yadanutpannamajātam tasmin kaścidbhaṅgo nāsti |",
  "S04n278:7": "anutpattikadharmakṣānti prāptirasyadvayapraveśaḥ“ |",
  "S04n278:8": "bodhisattvaḥ śrīgupto'bhāṣata-“ 'ahañca mame' -ti tadhi dvayam |",
  "S04n278:9": "ātmasamāropābhāve mama ( bhāvo ) nāsti |",
  "S04n278:10": "yaḥ samāropābhāvaḥ,",
  "S04n278:11": "sa hyadvayapraveśaḥ“ |",
  "S04n278:12": "bodhisattvaḥ śrīkūṭo'bravīt-“saṃkliṣṭañca vyavadānannāma te dvayam |",
  "S04n278:13": "saṃkliṣṭaparijñāne vyavadānamanyanā nāsti |",
  "S04n278:14": "sarvamanyanāsūnmūlanānugatimārgaḥ so'dvayapraveśaḥ“ |",
  "S04n278:15": "bodhisattvo bhadrajyotirāha- “calaśca manyanā tau hi dvayam |",
  "S04n278:16": "yo'calaḥ, ( tat- )",
  "S04n278:17": "manyanā'karaṇam ,",
  "S04n278:18": "amanasikāro'nadhikāraḥ |",
  "S04n278:19": "adhikāraviprayogaḥ so'dvayapraveśaḥ“ |",
  "S04n278:20": "bodhisattvaḥ subāhuravocat-“bodhicittaṃ ca śrāvakacittannāma-te hi dvayam |",
  "S04n278:21": "yanmāyācittasamadarśanaṃ tanna ca bodhicittanna ca śrāvakacittam |",
  "S04n278:22": "yā cittasya samalakṣaṇatā,",
  "S04n278:23": "sā hyadvayapraveśaḥ“ |",
  "S04n278:24": "bodhisattvo'nibhiṣa āha-“ādānañcānādānaṃ, te dvayam |",
  "S04n278:25": "yadanupādānaṃ,",
  "S04n278:26": "tannopalabhyate |",
  "S04n278:27": "yannopalabhyate,",
  "S04n278:28": "tasmin kalpanā'pakarṣaṇākaraṇam |",
  "S04n278:29": "sarvadharmākaraṇamanācāraḥ,",
  "S04n278:30": "sa hyadvayapraveśaḥ“ |",
  "S04n278:31": "bodhisattvaḥ sunetro 'vocat-“ekalakṣaṇatvañcālakṣaṇatvannāma, te dvayam |",
  "S04n278:32": "yat kalpanā'karaṇaṃ saṅkalpākaraṇam , ( tad )",
  "S04n278:33": "ekalakṣaṇatvālakṣaṇatvākaraṇam |",
  "S04n278:34": "yo lakṣaṇāvilakṣaṇe samalakṣaṇatāpraveśaḥ,",
  "S04n278:35": "so'dvayapraveśaḥ“ |",
  "S04n278:36": "bodhisattvastiṣyo'bravīt-“kuśalākudhalam iti, te dvayam |",
  "S04n278:37": "yat kuśalākuśalānutthāpanam ,",
  "S04n278:38": "nimittānimittayoradvayāvabodhaḥ, ( tad- )",
  "S04n278:39": "advayapraveśaḥ“ |",
  "S04n278:40": "bodhisattvaḥ siho'bhāṣata-“sāvadyañcānavadyamiti, te dvayam |",
  "S04n278:41": "yat prabhedajñānabajreṇābandhanāniḥsaraṇaṃ,",
  "S04n278:42": "tadadvayapraveśaḥ“ |",
  "S04n278:43": "bodhisattvaḥ sihamatiravocat-“idaṃ sāsravam,",
  "S04n278:44": "idamanāsravamiti-te hi dvayam |",
  "S04n278:45": "yat samatādharmaprāptyā''sravānāstravasaṃjñā'karaṇañcasaṃjñā'bhāvaḥ, ( yaḥ )",
  "S04n278:46": "samatāyāṃ na ca samatāprāptir na ca saṃjñāgranthiḥ,",
  "S04n278:47": "ya evamavatāraḥ,",
  "S04n278:48": "tadadvayapraveśaḥ“ |",
  "S04n278:49": "bodhisattvaḥ sukhādhimukto'bhāṣata-“idaṃ hi sukham idaṃ sukhannāstīti-te dvayam |",
  "S04n278:50": "suviśuddhajñānataḥ sarvasaṃkhyāvigatā cākāśasamāliptā buddhiḥ,",
  "S04n278:51": "sā'dvayapraveśaḥ“ |",
  "S04n278:52": "bodhisattvo nārāyaṇo'bravīt-“idaṃ hi laukikam,",
  "S04n278:53": "idaṃ lokottaramiti te dvayam |",
  "S04n278:54": "yā lokasya svabhāvaśūnyatā,",
  "S04n278:55": "tasyāṃ kiñcidapyuttaraṇannāsti,",
  "S04n278:56": "avatāro nāsti,",
  "S04n278:57": "na cādhigati rna cānadhigatiḥ |",
  "S04n278:58": "yasyānuttaraṇam anavatāro'nadhigatiścānadhigatyabhāvaḥ,",
  "S04n278:59": "tadhyadvayapraveśaḥ“ |",
  "S04n278:60": "bodhisattvo vinayamatirāha “saṃsāraśca nirvāṇamiti-te dvayam |",
  "S04n278:61": "saṃsārasvabhāvadarśanena saṃsāraśca parinirvāṇanna staḥ |",
  "S04n278:62": "yadevaṃ jñātaṃ,",
  "S04n278:63": "tadadvayapraveśaḥ“ |",
  "S04n278:64": "bodhisatttvaḥ pratyakṣadarśano'vocat-“kṣayākṣayau nāma-tau dvayam |",
  "S04n278:65": "kṣayohi sukṣīṇaḥ |",
  "S04n278:66": "yaḥ sukṣīṇastasminna ( kiñcit )",
  "S04n278:67": "kṣapayitavyam ;",
  "S04n278:68": "ato'kṣaya ucyate |",
  "S04n278:69": "yo'kṣayaḥ sa kṣaṇikaśca,",
  "S04n278:70": "kṣaṇike kṣayo nāsti |",
  "S04n278:71": "tadevanamupraviṣṭam advayadharmadvārāvagāho nāma“ |",
  "S04n278:72": "bodhisattvaḥ samantagupto'brabīt-“ātmanairātbhyamiti-te dvayam |",
  "S04n278:73": "ātmabhāve'nupalabhyamāne,",
  "S04n278:74": "kiṃ nairātmyaṃ kuryāt ? ( tat- )",
  "S04n278:75": "tayoḥ svabhāvadarśanenādvayam advayapraveśaḥ“ |",
  "S04n278:76": "bodhisattvo vidyuddevo'bhāṣata-“vidyā'vidye 'ti-te dvayam |",
  "S04n278:77": "avidyāyāḥ svabhāva iva,",
  "S04n278:78": "tathaiva vidyā'pi |",
  "S04n278:79": "yā'vidyā bhavati,",
  "S04n278:80": "sā'vyākṛtā,",
  "S04n278:81": "asaṃkhyeyā,",
  "S04n278:82": "saṃjñāpathātikrāntā |",
  "S04n278:83": "asyāṃ yo'bhisamayaḥ,",
  "S04n278:84": "so'dvayapraveśaḥ“ |",
  "S04n278:85": "bodhisattvaḥ priyadarśana āha-“rūpaṃ khalu śūnyam |",
  "S04n278:86": "rupannāśanena na śūnyam,",
  "S04n278:87": "api kho pana rūpasvabhāvaḥ śūnyaḥ |",
  "S04n278:88": "evameva vedanāsaṃjñāsaṃskāravijñānaṃ ( -ca )",
  "S04n278:89": "śūnyate 'ti-te dvayam |",
  "S04n278:90": "vijñānaṃ khalu śūnyatā |",
  "S04n278:91": "vijñānannāśanena na śūnyam,",
  "S04n278:92": "api kho pana vijñānasvabhāvaḥ śūnyaḥ |",
  "S04n278:93": "yo'smin pañcopādānaskandhe ( ṣv )",
  "S04n278:94": "evameva jānāti ,",
  "S04n278:95": "evaṃ jñānena vijñaḥ,",
  "S04n278:96": "so'dvaye praviśati“ |",
  "S04n278:97": "bodhisattvaḥ prabhāketuravocat-“caturdhātuno'nyatrākāśadhāturanya iti-te dvayam |",
  "S04n278:98": "caturdhātu punarākāśasvabhāvam |",
  "S04n278:99": "pūrvānto'pyākāśasvabhāvaḥ |",
  "S04n278:100": "aparāntaścākāśasvabhāvaḥ |",
  "S04n278:101": "evameva pratyutpannam |",
  "S04n278:102": "yat tathā dhātvavatārajñānam,",
  "S04n278:103": "tadadvayapraveśaḥ“ |",
  "S04n278:104": "bodhisattvo'gramatirabhāṣata-“cakṣuśca rūpannāma-te dvayam |",
  "S04n278:105": "ye cakṣuḥparijñānena rūpe'lobho 'dveṣo'mohaḥ tadhi śāntirnāma |",
  "S04n278:106": "evameva śrotraśabdo,",
  "S04n278:107": "ghrāṇagandhau,",
  "S04n278:108": "jihvārasau,",
  "S04n278:109": "kāyaspraṣṭavye,",
  "S04n278:110": "manodharmau-te dvayam |",
  "S04n278:111": "ye ca manaḥ parijñānāddharme ( -ṣv )",
  "S04n278:112": "alobho'dveṣo'moohaḥ-tadhi śāntirnāma |",
  "S04n278:113": "evaṃ śāntivihāro'dvayapraveśaḥ“ |",
  "S04n278:114": "bodhisattvo'kṣayamatirāha-“dānasarvajñatāpariṇāmane-te dvayam |",
  "S04n278:115": "dānasvabhāvaḥ sarvajñatā |",
  "S04n278:116": "sarvajñatāsvabhāvaḥ pariṇāmanā |",
  "S04n278:117": "evameva śīlakṣāntivīryadhyānaprajñāsarvajñatāpariṇāmane-te dvayam |",
  "S04n278:118": "sarvajñatā hi ( śīlakṣāntivīryadhyāna-)",
  "S04n278:119": "prajñāsvabhāvaḥ;",
  "S04n278:120": "pariṇāmanā ca sarvajñatāsvabhāvaḥ |",
  "S04n278:121": "tasmin ekanaye'vatāraḥ,",
  "S04n278:122": "so'dvayapraveśaḥ“ |",
  "S04n278:123": "bodhisattvo gambhīramatirabhāṣata-“śūnyatāyā anyatrānimittāpraṇihitamapyanyamiti-te dvayam |",
  "S04n278:124": "yacchūnyama,",
  "S04n278:125": "tasminna kiñcinnimittam |",
  "S04n278:126": "animitte'praṇihitam |",
  "S04n278:127": "apraṇihite cittamānovijñānāsañcāraḥ |",
  "S04n278:128": "yat sarvavimokṣamukheṣu draṣṭavyameka vimokṣamukhaṃ,",
  "S04n278:129": "tadadvayamukhapraveśaḥ“ |",
  "S04n278:130": "bodhisattvaḥ śāntendriyo'bravīt-“buddhadharmasaṅghā iti-te dvayam |",
  "S04n278:131": "buddhasya svabhāvo hi dharmaḥ,",
  "S04n278:132": "dharmasya ca svabhāvaḥ saṅgha |",
  "S04n278:133": "sarve te punarasaṃskṛtāḥ |",
  "S04n278:134": "asaṃskṛtaṃ hyākāśa ( samam )",
  "S04n278:135": "sarvadharmanaya ākāśatulyaḥ |",
  "S04n278:136": "yadevamanugamanaṃ,",
  "S04n278:137": "tadhyadvayapraveśaḥ“ |",
  "S04n278:138": "bodhisattvo'pratihatekṣaṇo'bhāṣata-“satkāyaśca satkāyanirodha iti-tau dvayam |",
  "S04n278:139": "satkāya eva nirodhaḥ |",
  "S04n278:140": "tat kasya hetoḥ ?",
  "S04n278:141": "satkāyadṛṣṭyanutpāde'sati yat tathā dṛṣṭayā 'satkāya' iti vā 'satkāyanirodha' iti tadkalpyam ;",
  "S04n278:142": "akalpyaṃ nirvikalpam |",
  "S04n278:143": "atyantākalpanayā nirodhasvabhāvo bhavati |",
  "S04n278:144": "asambhavo'vināśas-so'dvayapraveśaḥ“ |",
  "S04n278:145": "bodhisattvaḥ subinīto'vocat-“kāyavākcittasaṃvaro nāma tadadvayam |",
  "S04n278:146": "tat kasya hetoḥ ?",
  "S04n278:147": "ime dharmā anabhisaṃskāralakṣaṇāḥ |",
  "S04n278:148": "tat kāyānabhisaṃskāraṃ,",
  "S04n278:149": "tallakṣaṇe'pi vāganabisaṃskārañca cittānabhisaṃskāram |",
  "S04n278:150": "tat sarvadharmānabhisaṃskāraṃ,",
  "S04n278:151": "taditi jñātavyamanuveditavyam |",
  "S04n278:152": "tat tadanabhisaṃskārajñānam,",
  "S04n278:153": "tadhyadvayapraveśaḥ“ |",
  "S04n278:154": "bodhisattvaḥ puṇyakṣetra āha-“puṇyāpuṇyānijyābhusaṃskārābhisaṃskāraṇate 'ti - te dvayam |",
  "S04n278:155": "yat puṇyāpuṇyānizyānabhisaṃskāram ,",
  "S04n278:156": "tadadvayam |",
  "S04n278:157": "puṇyāpuṇyānijyābhisaṃskārāṇāṃ svalakṣaṇaṃ śūnyatā |",
  "S04n278:158": "tasyā puṇyaṃ vāpuṇyaṃ vā'nijyaṃ vā na bhavanti |",
  "S04n278:159": "abhisaṃskaraṇatā'pi ca na bhavati ya evamanabhinirhāraḥ,",
  "S04n278:160": "sa hyadvayapraveśaḥ“ |",
  "S04n278:161": "bodhisattvaḥ padmavyūho'brabīt--“ātmaparyutthānādutpādaḥ,",
  "S04n278:162": "tadhi dvayam |",
  "S04n278:163": "ātmaparijñā dvayānutthāpanam |",
  "S04n278:164": "tathā'dvayasthāne'vijñaptikenāvijñāptikam-tadhyadvayapraveśaḥ“ |",
  "S04n278:165": "bodhisattvaḥ śrīgarbho'bhāṣata “upalambhena prabhedaḥ-taddvayam |",
  "S04n278:166": "yo'nupalambhas-taddvayam |",
  "S04n278:167": "tato yāvanupādānanotsargau,",
  "S04n278:168": "tadhyadvayapraveśaḥ“ |",
  "S04n278:169": "bodhisattvaścandrottaro'bravīt--“andhakārā'lokāviti-tau dvayam |",
  "S04n278:170": "andhakārā'lokābhāvaḥ-tadadvayam |",
  "S04n278:171": "tat kasya hotoḥ ?",
  "S04n278:172": "evaṃ nirodhasamāpanne na cāndhakāro na cā'lokaḥ |",
  "S04n278:173": "sarvadharmalakṣaṇatvaṃ tathaivāpi |",
  "S04n278:174": "yo'syāṃ samatāyāmavatāraḥ,",
  "S04n278:175": "so'dvayapraveśaḥ“ |",
  "S04n278:176": "bodhisattvo ratnamudrāhasto'vocat--“nirvāṇabhiratiśca saṃsārāratis-te dvayam |",
  "S04n278:177": "ye nirvāṇānabhiratiśca saṃsāranaratis-te'dvayam |",
  "S04n278:178": "tat kasya hetoḥ ?",
  "S04n278:179": "yad bandhanānniḥsaraṇamākhyāyate,",
  "S04n278:180": "ki tu yadatyantato'bandhanam,",
  "S04n278:181": "tanmokṣaṃ kuto gaveṣī ? ( yad )",
  "S04n278:182": "abandhanāniḥsaraṇayorbhikṣuṇā ratyaratī na labhyete,",
  "S04n278:183": "na tadhyadvayapraveśaḥ“ |",
  "S04n278:184": "bodhisattvo ratnakūṭarāja āha--“mārgakumārgāviti-tau dvayam |",
  "S04n278:185": "mārgāvagāhe kumārgānācāraḥ |",
  "S04n278:186": "anācārasthānam mārgasaṃjñā vā'bhūtamārgasaṃjñā ( vā ) na bhavati |",
  "S04n278:187": "saṃjñāparijñā hi matidvayānavatāraḥ |",
  "S04n278:188": "so'dvayapraveśaḥ“ |",
  "S04n278:189": "bodhisattvaḥ satyarato'bhāṣata --“satyamṛṣe nāma te dvayam |",
  "S04n278:190": "yadi satyadarśanena satyatā'(pi)",
  "S04n278:191": "na samanudṛśyate,",
  "S04n278:192": "mithyādṛṣṭiḥ kuto dṛśyate ?",
  "S04n278:193": "tat kasya hetoḥ?",
  "S04n278:194": "māṃsacakṣuṣā na dṛśyate,",
  "S04n278:195": "dṛśyate prajñācakṣuṣā adarśanena yathā'vidarśanā,",
  "S04n278:196": "tathā ( hi ) dṛśyate |",
  "S04n278:197": "yatra na ca darśananna ca vidarśanā taddvayapraveśaḥ“ |",
  "S04n278:198": "tathaiva te bodhisattvāḥ svakasvakanirdeśaṃ deśayitvāḥ,",
  "S04n278:199": "maṃjuśrīkumārabhūtadametavocan--“maṃjuśrīḥ,",
  "S04n278:200": "bodhisattvosyādvayapraveśaḥ kim ?“",
  "S04n278:201": "maṃjuśrīrabravīt--“satpuruṣāḥ,",
  "S04n278:202": "yadyapi sarvairyuṣmābhiḥ subhāṣitam ,",
  "S04n278:203": "sarva tad yuṣmābhiruktaṃ hi dvayam |",
  "S04n278:204": "sthāpayitvaikopadeśam ( api )",
  "S04n278:205": ", ( yad )",
  "S04n278:206": "anabhilāpyam,",
  "S04n278:207": "abhāṣyam ,",
  "S04n278:208": "anuktam,",
  "S04n278:209": "anavaghoṣyam ,",
  "S04n278:210": "avyapadeśyam,",
  "S04n278:211": "prajñaptirahitam tadhyadvayapraveśaḥ“ |",
  "S04n278:212": "tato maṃjuśrīkumārabhūto licchavi vimalakīrtimetad avocat--“asmābhiḥ svakasvakanirdeśe vyākhyāte,",
  "S04n278:213": "kulaputra,",
  "S04n278:214": "tvamapyadvayadharmamukhanirdeśāya svabhidhānaṃ kuru“ |",
  "S04n278:215": "atha licchavirvimalakīrtistūṣṇībhūto'bhūta |",
  "S04n278:216": "tato maṃjuśrīkumārabhūto licchavivimalakīrtaye sādhukāram adāt-“sādhu,",
  "S04n278:217": "sādhu, kulaputra |",
  "S04n278:218": "ayaṃ hi bodhisattvānām advayapraveśaḥ |",
  "S04n278:219": "tasmin akṣaravacanavijñaptipracāro nāsti“ |",
  "S04n278:220": "asmin nirdeśe deśite,",
  "S04n278:221": "bodhisattvānām pañcasahasreṇādvayadharmamukhapraveśenānutpattikadharmakṣāntiḥ pratilabdhā |",
  "S04n278:222": "advayadharmamukhapraveśasya parivarto'stamaḥ"
}