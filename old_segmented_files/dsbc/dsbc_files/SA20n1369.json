{
  "SA20n1369:0": "daśamodhikāraḥ",
  "SA20n1369:1": "uddānam |",
  "SA20n1369:2": "ādiḥ siddhiḥ śaraṇaṃ gotraṃ citte tathaiva cotpādaḥ |",
  "SA20n1369:3": "svaparārthastatvārthaḥ prabhāvaparipākabodhiśca ||1 ||",
  "SA20n1369:4": "eṣa ca bodhyadhikāra ādimārabhya yāvat bodhipaṭalānusāreṇānugantavyaḥ |",
  "SA20n1369:5": "adhimuktiprabhedalakṣaṇavibhāge ślokau |",
  "SA20n1369:6": "jātā-jātā grāhikā grāhyabhūtā mitrādāttā svātmato bhrāntikā ca |",
  "SA20n1369:7": "abhrāntānyā āmukhā naiva cānyā ghoṣācārā caiṣikā cekṣikā ca ||2 ||",
  "SA20n1369:8": "jātā atītapratyutpannā |",
  "SA20n1369:9": "ajātā anāgatā |",
  "SA20n1369:10": "grāhikā ādhyātmikā[kī] yayālambanamadhimucyate |",
  "SA20n1369:11": "grāhyabhūtā bāhyā yānā[mā] lambanatvenādhimucyate |",
  "SA20n1369:12": "mitrādāttā audārikī |",
  "SA20n1369:13": "svātmataḥ sūkṣmā |",
  "SA20n1369:14": "bhrāntikā hīnā viparītādhimokṣāt |",
  "SA20n1369:15": "abhrāntikā praśāntā [praṇītā] |",
  "SA20n1369:16": "āmukhā antike samavahitapratyayatvāt |",
  "SA20n1369:17": "anāmukhā dūre viparyayāt |",
  "SA20n1369:18": "ghoṣācārā śrutamayī |",
  "SA20n1369:19": "eṣikā cintāmayī |",
  "SA20n1369:20": "īkṣikā bhāvanāmayī pratyavekṣaṇāt |",
  "SA20n1369:21": "hāryā kīrṇā'vyāvakīrṇā vipakṣairhīnodārā āvṛtā 'nāvṛtā ca |",
  "SA20n1369:22": "yuktā'yuktā saṃbhṛtā'saṃbhṛtā ca gāḍhaṃ viṣṭā dūragā cādhimuktiḥ ||3 ||",
  "SA20n1369:23": "hāryā mṛdvī |",
  "SA20n1369:24": "vyavakīrṇā madhyā |",
  "SA20n1369:25": "avyavakīrṇā vipakṣairadhimātrā |",
  "SA20n1369:26": "hinā 'nyayāne |",
  "SA20n1369:27": "udārāmahāyāne |",
  "SA20n1369:28": "āvṛtā sāvaraṇā viśeṣagamanāya |",
  "SA20n1369:29": "anāvṛtā nirāvaraṇā |",
  "SA20n1369:30": "yuktā sātatyasatkṛtyaprayogāt |",
  "SA20n1369:31": "ayuktā tadvirahitā |",
  "SA20n1369:32": "saṃbhṛtādhigamayogyā |",
  "SA20n1369:33": "asaṃbhṛtā viparyayāt |",
  "SA20n1369:34": "gāḍhaṃ viṣṭā bhūmipraviṣṭā |",
  "SA20n1369:35": "dūragā pariśiṣṭāsu bhūmiṣu |",
  "SA20n1369:36": "adhimuktiparipanthe trayaḥ ślokāḥ |",
  "SA20n1369:37": "amanaskārabāhulyaṃ kauśīdyaṃ yogavibhramaḥ |",
  "SA20n1369:38": "kumitraṃ śubhadaurbalyamayoniśomanaskriyā ||4 ||",
  "SA20n1369:39": "jātāyā amanasikārabāhulyaṃ paripanthaḥ |",
  "SA20n1369:40": "ajātāyāḥ kauśīdyam,",
  "SA20n1369:41": "grāhyagrāhakabhūtāyā yogavibhramaḥ,",
  "SA20n1369:42": "tathaivābhiniveśāt |",
  "SA20n1369:43": "mitrādāttāyāḥ kumitram,",
  "SA20n1369:44": "viparītagrāhaṇāt |",
  "SA20n1369:45": "svātmato'dhimukteḥ kuśalamūladaurbalyam |",
  "SA20n1369:46": "abhrāntāyā ayoniśo amanasikāraḥ [manasikāraḥ] paripanthastadvirodhitvāt |",
  "SA20n1369:47": "pramādo'lpaśrutatvaṃ ca śrutacintālpatuṣṭatā |",
  "SA20n1369:48": "śamamātrābhimānaśca tathā 'parijayo mataḥ ||5 ||",
  "SA20n1369:49": "āmukhāyāḥ pramādaḥ,",
  "SA20n1369:50": "tasyā apramādakṛtatvāt |",
  "SA20n1369:51": "ghoṣācārāyā alpaśrutatvam,",
  "SA20n1369:52": "nītārthasūtrāntāśravaṇāt |",
  "SA20n1369:53": "eṣikāyāḥ śrutamātrasaṃtuṣṭatvamalpacintāsaṃtuṣṭatvaṃ ca |",
  "SA20n1369:54": "īkṣikāyāścintāmātrasaṃtuṣṭatvaṃ śamathamātrābhimānaśca |",
  "SA20n1369:55": "hāryāvyavakīrṇayoraparijayaḥ paripanthaḥ |",
  "SA20n1369:56": "anudvegastathodvega āvṛttiścāpyayuktatā |",
  "SA20n1369:57": "asaṃbhṛtiśca vijñeyā'dhimuktiparipanthatā ||6 ||",
  "SA20n1369:58": "hīnāyā anudvegaḥ saṃsārāt |",
  "SA20n1369:59": "udārāyā udvegaḥ anāvṛtāyāścāvṛtiḥ |",
  "SA20n1369:60": "yuktāyā ayuktatā |",
  "SA20n1369:61": "saṃbhṛtāyā asaṃbhṛtiḥ paripanthaḥ |",
  "SA20n1369:62": "adhimuktāvanuśaṃse pañca ślokāḥ |",
  "SA20n1369:63": "puṇyaṃ mahadakaukṛtyaṃ saumanasyaṃ sukhaṃ mahat |",
  "SA20n1369:64": "avipraṇāśaḥ sthairyaṃ na viśeṣagamanaṃ tathā ||7 ||",
  "SA20n1369:65": "dharmābhisamayaścātha svaparārthāptirūttamā |",
  "SA20n1369:66": "kṣiprābhijñatvamete hi anuśaṃsādhimuktitaḥ ||8 ||",
  "SA20n1369:67": "jātāyāṃ pratyutpannāyāṃ puṇyaṃ mahat |",
  "SA20n1369:68": "atītāyāmakaukṛtyamavipratisārāt |",
  "SA20n1369:69": "grāhikāyāṃ grāhyabhūtāyāṃ ca mahatsaumanasyaṃ samādhiyogāt |",
  "SA20n1369:70": "kalyāṇamitrajanitāyāmavipraṇāśaḥ |",
  "SA20n1369:71": "svayamadhimuktau sthairyam |",
  "SA20n1369:72": "bhrā[abhrā]ntikāyāmāmukhāyāṃ śrutamayādikāyāṃ ca yāvat madhyāyāṃ viśeṣagamanam |",
  "SA20n1369:73": "adhimātrāyāṃ dharmābhisamayaḥ |",
  "SA20n1369:74": "hīnāyāṃ svārthaprāptiḥ |",
  "SA20n1369:75": "udārāyāṃ parārthaprāptiḥ paramā |",
  "SA20n1369:76": "anāvṛtayuktasaṃbhṛtādiṣu śuklapakṣāsu kṣiprābhijñatvamanuśaṃsaḥ |",
  "SA20n1369:77": "kāmināṃ sā śvasadṛśī kūrmaprakhyā samādhinām |",
  "SA20n1369:78": "bhṛtyopamā svārthināṃ sā rājaprakhyā parārthinām ||9 ||",
  "SA20n1369:79": "yatha śvā duḥkhārtaḥ satatamavitṛptaḥ kṣudhitako yathā kūrmaścāsau jalavivarake saṃkucitakaḥ |",
  "SA20n1369:80": "yathā bhṛtyo nityamupacakitamūrtirvicarati |",
  "SA20n1369:81": "yathā rājā ājñāviṣaye vaśa[cakra? ]",
  "SA20n1369:82": "vartī viharati |",
  "SA20n1369:83": "tathā kāmisthātṛsvaparajanakṛtyārthamudite",
  "SA20n1369:84": "viśeṣo vijñeyaḥ satatamadhimuktyā vividhayā |",
  "SA20n1369:85": "mahāyāne tasya vidhivadiha matvā paramatāṃ",
  "SA20n1369:86": "bhṛśaṃ tasmin dhīraḥ satatamiha tābheva vṛṇuyāt ||10 ||",
  "SA20n1369:87": "api khalu kāmināmadhimuktiḥ śvasadṛśī laukikasamādhigatānāṃ kūrmaprakhyāsvārthavatāṃ bhṛtyopamā |",
  "SA20n1369:88": "rājaprakhyā parārthavatām |",
  "SA20n1369:89": "etamevārthaṃ pareṇopapādya mahāyānādhimuktau samādāpayati |",
  "SA20n1369:90": "adhimuktilayapratiṣedhe ślokāḥ [kaḥ] |",
  "SA20n1369:91": "manuṣa[ṣya]bhūtāḥ saṃbodhiṃ prāpnuvanti pratikṣaṇam |",
  "SA20n1369:92": "aprameyā yataḥ sattvā layaṃ nāto'dhivāsayet ||11 ||",
  "SA20n1369:93": "tribhiḥ kāraṇairlayo na yuktaḥ |",
  "SA20n1369:94": "yato manuṣa[ṣya]bhūtā bodhiṃ prāpnuvanti |",
  "SA20n1369:95": "nityaṃ prāpnuvanti |",
  "SA20n1369:96": "aprameyāśca prāpnuvanti |",
  "SA20n1369:97": "adhimuktipuṇyaviśeṣaṇe dvau ślokau |",
  "SA20n1369:98": "yathā puṇyaṃ prasavate pareṣāṃ bhojanaṃ dadat |",
  "SA20n1369:99": "na tu svayaṃ sa bhuñjānastathā puṇyamahodayaḥ ||12 ||",
  "SA20n1369:100": "sūtrokto labhyate dharmātparārthāśrayadeśitāt |",
  "SA20n1369:101": "na tu svārthāśrayāddharmāddeśitādupalabhyate ||13 ||",
  "SA20n1369:102": "yathā bhojanaṃ dadataḥ puṇyamutpadyate parārthādhikārāt |",
  "SA20n1369:103": "na tu svayaṃ bhuñjānasya svārthādhikārāt |",
  "SA20n1369:104": "evaṃ parārthāśrayadeśitāt mahāyānadharmātteṣu teṣu [mahāyāna] sūtreṣūktaḥ puṇyodayo mahāllabhyate |",
  "SA20n1369:105": "na tu svārthāśrayadeśitāt śrāvakayānadharmāt |",
  "SA20n1369:106": "adhimuktiphalaparigrahe ślokaḥ |",
  "SA20n1369:107": "iti vipulagatau mahogha[mahārya]dharme janiya [parijanayan ?] sadā",
  "SA20n1369:108": "matimānmahādhimuktim |",
  "SA20n1369:109": "vipulasatatapuṇyatadvivṛddhiṃ vrajati guṇairasamairmahātmatāṃ ca ||14 ||",
  "SA20n1369:110": "yatra yādṛśyādhimuktyā yo yatphalaṃ parigṛhṇāti |",
  "SA20n1369:111": "vistīrṇe mahāyānadharme 'pari[hā]ṇī[parijananī? ]",
  "SA20n1369:112": " yayodārādhimuktyā matimān trividhaṃ phalaṃ parigṛhṇāti |",
  "SA20n1369:113": "vipulapuṇyavṛddhiṃ tasyā evādhimuktervṛddhiṃ taddhetukāṃ cātulyaguṇamahātmatāṃ buddhatvam |",
  "SA20n1369:114": " || mahāyānasūtrālaṃkāre adhimuktyadhikāro daśamaḥ ||"
}