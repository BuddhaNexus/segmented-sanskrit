{
  "SA20n1341:0": "dvitīyo'dhikāraḥ",
  "SA20n1341:1": "śaraṇagamanaviśeṣasaṃgrahaślokaḥ |",
  "SA20n1341:2": "ratnāni yo hi śaraṇapragato'tra yāne",
  "SA20n1341:3": "jñeyaḥ sa eva paramaḥ śaraṇa[ṇaṃ] gatānām |",
  "SA20n1341:4": "sarvatragābhyupagamādhigamābhibhūti-",
  "SA20n1341:5": "bhedaiścaturvidhamayārthaviśeṣaṇena ||1 ||",
  "SA20n1341:6": "yasmādādau duṣkara eṣa vyavasāyo",
  "SA20n1341:7": "duḥsādho'sau naikasahasrairapi kalpaiḥ |",
  "SA20n1341:8": "siddho yasmātsattvahitādhānamahārtha-",
  "SA20n1341:9": "stasmādagre yāna ihāgraśaraṇārthaḥ ||2 ||",
  "SA20n1341:10": "sarvān sattvāṃstārayituṃ yaḥ pratipanno",
  "SA20n1341:11": "yano jñāne sarvagate kauśalyayuktaḥ |",
  "SA20n1341:12": "yo nirvāṇe saṃsaraṇe'pyekaraso'sau [saṃsṛtiśāntyekaraso'sau]",
  "SA20n1341:13": "jñeyo dhīmāneṣa hi sarvatraga evam ||3 ||",
  "SA20n1341:14": "śaraṇagatimimāṃ gato mahārthāṃ",
  "SA20n1341:15": "guṇagaṇavṛddhimupaiti so'prameyām |",
  "SA20n1341:16": "sphurati jagadidaṃ kṛpāśayena",
  "SA20n1341:17": "prathayati cāpratimaṃ mahā[rdhaṃ]dharmam ||4 ||",
  "SA20n1341:18": " || mahāyānasūtrālaṃkāre śaraṇagamanādhikāro dvitīyaḥ ||"
}