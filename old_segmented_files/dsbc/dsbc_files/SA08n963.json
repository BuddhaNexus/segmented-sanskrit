{
  "SA08n963:0": "(4) parivartavargaḥ",
  "SA08n963:1": "kasya kālaḥ parivartate",
  "SA08n963:2": "kāmairevāvitṛṣṇasya tṛṣṇayā tṛṣitasya ca |",
  "SA08n963:3": "cañcalendriyacittasya kālo'yaṃ parivartate ||1 ||",
  "SA08n963:4": "anityadhyeyatā yasya sukhasaktasya dehinaḥ |",
  "SA08n963:5": "strīdarśanena mattasya kālo'yaṃ parivartate ||2 ||",
  "SA08n963:6": "jātimaraṇavaśyasya mohitasya ca tṛṣṇayā |",
  "SA08n963:7": "bālasya tu janasyāsya kālo'yaṃ parivartate ||3 ||",
  "SA08n963:8": "gaticārakabaddhasya udvegavaśagasya ca |",
  "SA08n963:9": "pramādaviṣamūḍhasya kālo'yaṃ parivartate ||4 ||",
  "SA08n963:10": "auddhatyādiprasaktasya gātraśobhāratasya ca |",
  "SA08n963:11": "lābhairatṛptamanasaḥ kālo'yaṃ parivartate ||5 ||",
  "SA08n963:12": "pañcabandhanabaddhasya ṣaḍbhirvyāmohitasya ca |",
  "SA08n963:13": "trailokyavidhimūḍhasya kālo'yaṃ parivartate ||6 ||",
  "SA08n963:14": "vinipātānabhijñasya vitarkopahatasya ca |",
  "SA08n963:15": "janasya saktamanasaḥ kālo'yaṃ parivartate ||7 ||",
  "SA08n963:16": "tatkālaramaṇīyeṣu pariṇāmahiteṣu ca |",
  "SA08n963:17": "kāmeṣu saktamanasaḥ kālo'yaṃ parivartate ||8 ||",
  "SA08n963:18": "pūrvaduḥkhānabhijñasya divyasaukhyaratasya ca |",
  "SA08n963:19": "viprayogānabhijñasya kālo'yaṃ parivartate ||9 ||",
  "SA08n963:20": "karmajālena baddhasya manasyeva viceṣṭinaḥ |",
  "SA08n963:21": "satpathāt paribhraṣṭasya kālo'yaṃ parivartate ||10 ||",
  "SA08n963:22": "bhavadoṣānabhijñasya tṛṣṇayā mūḍhacetasaḥ |",
  "SA08n963:23": "mohāndhakāramagnasya kālo'yaṃ parivartate ||11 ||",
  "SA08n963:24": "kāmaikapāśabaddhasya niḥsahāyasya dehinaḥ |",
  "SA08n963:25": "devīgaṇavimūḍhasyaṃ kālo'yaṃ parivartate ||12 ||",
  "SA08n963:26": "indriyād vyapakṛṣṭasya satpathabhrāmitasya ca |",
  "SA08n963:27": "traidhātukarasajñasya kālo'yaṃ parivartate ||13 ||",
  "SA08n963:28": "saṃvarāsaṃvarajñasya vyāpādabahulasya ca |",
  "SA08n963:29": "naṣṭasambuddhamārgasya kālo'yaṃ parivartate ||14 ||",
  "SA08n963:30": "hitāhitavahirgasya kāryākāryajaḍasya ca |",
  "SA08n963:31": "krīḍābāla sadṛśasya kālo'yaṃ parivartate ||15 ||",
  "SA08n963:32": "nadīprastravaṇocceṣu vanopavanabhūmiṣu |",
  "SA08n963:33": "(saṃ)krīḍātatparasyāsya kālo'yaṃ parivartate ||16 ||",
  "SA08n963:34": "vimānagiripṛṣṭheṣu dharmākaravaneṣu ca |",
  "SA08n963:35": "ramataḥ kāmabhogeṣu kālo'yaṃ parivartate ||17 ||",
  "SA08n963:36": "karmadharma vipākeṣu nirāsaktasya dehinaḥ |",
  "SA08n963:37": "kevalāhārasaktasya kālo'yaṃ parivartate ||18 ||",
  "SA08n963:38": "śarīrasthitasyā'pi śarīrānabhijñatā",
  "SA08n963:39": "karmaṇāyuḥ pariśrāntaṃ traidhātukamidaṃ sadā |",
  "SA08n963:40": "bhramanti cakravannityaṃ na ca vindanti bāliśāḥ ||19 ||",
  "SA08n963:41": "jagataḥ doṣānabhijñatā",
  "SA08n963:42": "vinipātocchru yamayaṃ yo nāmārohate jagat |",
  "SA08n963:43": "na ca doṣāvadheyatvaṃ prakurvanti vimohitāḥ ||20 ||",
  "SA08n963:44": "dhīrasya kāmaparivarjanaṃ saukhyahetuḥ",
  "SA08n963:45": "etat (tu) paramaṃ saukhyaṃ yat kāmaparivarjanam |",
  "SA08n963:46": "vītakāṃkṣasya dhīrasya gataśokasya tāpinaḥ ||21 ||",
  "SA08n963:47": "munīnāṃ caramapadaprāptiphalam",
  "SA08n963:48": "tadādimadhyanidhane kalyāṇaṃ kṣemamuttamam |",
  "SA08n963:49": "yad prāpyamunayaḥ śrāntāścaranti vigatajvarāḥ ||22 ||",
  "SA08n963:50": "duḥkhahetavaḥ kāmāḥ",
  "SA08n963:51": "satkāmajaṃ bhavet saukhyaṃ vinipātagataṃ tu tat |",
  "SA08n963:52": "na hi kāmaviśeṣaṃ ca kiñcid duḥkhavipākajam ||23 ||",
  "SA08n963:53": "tasmāt kāmeṣu matimān na lubhyet kathañcana |",
  "SA08n963:54": "te hi saṃsāraduḥkhānāṃ hetubhūtāḥ sudāruṇāḥ ||24 ||",
  "SA08n963:55": "vanopavanaśaileṣu padmākaravaneṣu ca |",
  "SA08n963:56": "vibhrāntāstṛṣṇayā bālāḥ patanti saha daivataiḥ ||25 ||",
  "SA08n963:57": "śubhakarmāsakteḥ upadeśaḥ",
  "SA08n963:58": "kāñcaneṣu (ca)",
  "SA08n963:59": "śaileṣu vaidūryaśikhareṣu ca |",
  "SA08n963:60": "kṣīyate hi śubhaṃ karma yatasva saha daivataiḥ ||26 ||",
  "SA08n963:61": "kalpavṛkṣeṣu ramyeṣu nadīprastravaṇeṣu ca |",
  "SA08n963:62": "caratastaiḥ śubhaṃ kṣīṇaṃ yatasva saha daivataiḥ ||27 ||",
  "SA08n963:63": "bhūmibhāgeṣu ramyeṣu ratnākaravaneṣu ca |",
  "SA08n963:64": "na śubhaṃ te sadā cīrṇa yatasva saha daivataiḥ ||28 ||",
  "SA08n963:65": "pañcātmakena vīryeṇa manaḥprahalādakāriṇā |",
  "SA08n963:66": "hatasya gatakālasya yatasva saha daivataiḥ ||29 ||",
  "SA08n963:67": "devānāṃ hitānabhijñatā",
  "SA08n963:68": "kāmaṃ saṃsakta manasairnityaṃ viṣayatatparaiḥ |",
  "SA08n963:69": "na jñāyate hitaṃ devairyadamantrāhitaṃ bhavet ||30 ||",
  "SA08n963:70": "devanindā",
  "SA08n963:71": "alpaśiṣṭamidaṃ puṇyaṃ cyavanaṃ samupasthitam |",
  "SA08n963:72": "gantavyamanyatra suraiḥ sukarmaphalabhojibhiḥ ||31 ||",
  "SA08n963:73": "ye nityaṃ śubhasaṃsaktāḥ kurvanti vā śubhaṃ sadā |",
  "SA08n963:74": "teṣāṃ visadṛśo heturmūrkhāṇāṃ hi vivartate ||32 ||",
  "SA08n963:75": "ke mṛtyuṃ pratīkṣante",
  "SA08n963:76": "bhuktvā mṛtyuṃ pratīkṣante te janāḥ kāmamohitāḥ |",
  "SA08n963:77": "śubhaśīlatamo'jñānāḥ sarvadā na parāyaṇāḥ ||33 ||",
  "SA08n963:78": "bhuktvā mṛtyuṃ pratīkṣante te janāḥ kāmamohitāḥ |",
  "SA08n963:79": "ye na karmavipākasya jñānaṃ roṣavadhe ratāḥ ||34 ||",
  "SA08n963:80": "bhuktvā mṛtyuṃ pratīkṣante te janāḥ kāmamohitāḥ |",
  "SA08n963:81": "prajñāpayanti na samā stṛṣṇāgniparivāritāḥ ||35 ||",
  "SA08n963:82": "bhuktvā mṛtyuṃ pratīkṣante te janāḥ kāmamohitāḥ |",
  "SA08n963:83": "viprayogakṛtaṃ duḥkhaṃ ye na paśyanti dāruṇam ||36 ||",
  "SA08n963:84": "bhuktvā mṛtyuṃ pratīkṣante te janāḥ kāmamohitāḥ |",
  "SA08n963:85": "strījanāsaktahṛdayā na vindanti punarbhavam |37 ||",
  "SA08n963:86": "bhuktvā mṛtyuṃ pratīkṣante te janāḥ kāmamohitāḥ |",
  "SA08n963:87": "vipattivyādhiśokebhyo nodvijanti kathañcana ||38 ||",
  "SA08n963:88": "bhuktvā mṛtyuṃ pratīkṣante te janāḥ kāmamohitāḥ |",
  "SA08n963:89": "ye pāpamitrasaṃsarga prakurvanti mahārūṣam ||39 ||",
  "SA08n963:90": "bhuktvā mṛtyuṃ pratīkṣante te janāḥ kāmamohitāḥ |",
  "SA08n963:91": "bhāvitaṃ cetasā yairna na ca tattvapraveśitā ||40 ||",
  "SA08n963:92": "bhuktvā mṛtyuṃ pratīkṣante te janāḥ kāmamohitāḥ |",
  "SA08n963:93": "yena sarvāsvavasthāsu saṃsārabhayabhīravaḥ ||41 ||",
  "SA08n963:94": "bhuktvā mṛtyuṃ pratīkṣante te janāḥ kāmamohitāḥ |",
  "SA08n963:95": "kāryākāryeṣu ye nityaṃ na subhāṣitacetasaḥ ||42 ||",
  "SA08n963:96": "bhuktvā mṛtyuṃ pratīkṣante te janāḥ kāmamohitāḥ |",
  "SA08n963:97": "ye na tattvadhiyo nityaṃ sarvabhūtahite ratāḥ ||43 ||",
  "SA08n963:98": "bhuktvā mṛtyuṃ pratīkṣante te janāḥ kāmamohitāḥ |",
  "SA08n963:99": "ye śarīra sukhārthena dharma hiṃsanti mohitāḥ ||44 ||",
  "SA08n963:100": "paṇḍitalakṣaṇam",
  "SA08n963:101": "ekāntamanasā nityaṃ śubhaṃ kāryaṃ prayatnataḥ |",
  "SA08n963:102": "aśubhaṃ ca sadā varjyametat paṇḍitalakṣaṇam ||45 ||",
  "SA08n963:103": "vinipātasādhanāni",
  "SA08n963:104": "kṣayaṃ yātaṃ ca yat śīlaṃ spṛṣṭvā yaḥ samupāgataḥ |",
  "SA08n963:105": "pramādāvañcito'vaśyaṃ vinipāto bhaviṣyati ||46 ||",
  "SA08n963:106": "viṣayiṇaḥ parivartanaśīlatā na tu viṣayāṇām",
  "SA08n963:107": "gatā gacchanti yāsyanti deveśāścaiva sarvataḥ |",
  "SA08n963:108": "tiṣṭhanti śikhare ramye nānāratnavibhūṣite ||47 ||",
  "SA08n963:109": "vaidūryaśikharā ramyāstathānye vanamālinaḥ |",
  "SA08n963:110": "viṣayāstādṛśā eva janastu parivartate ||48 ||",
  "SA08n963:111": "vanopavanaramyāṇi bhūmibhāgāni sarvaśaḥ |",
  "SA08n963:112": "tiṣṭhantyavikalānyeva janastu parivartate ||49 ||",
  "SA08n963:113": "vaidūryamayanālāni kāñcanāni viśeṣataḥ |",
  "SA08n963:114": "padmākarāṇi tānyeva janastu parivartate ||50 ||",
  "SA08n963:115": "sarāṃsi sarito ramyāḥ pakṣisaṅghairnirantaram |",
  "SA08n963:116": "tathaivāvikalā hyete janastu parivartate ||51 ||",
  "SA08n963:117": "vimānāni rathāścaiva harmyāṇi ca tathaiva ca |",
  "SA08n963:118": "tiṣṭhantyavikalā hyete janastu parivartate ||52 ||",
  "SA08n963:119": "parivartanaṃ lokasya viṣayairvañcitasya ca |",
  "SA08n963:120": "tathāpi nāmalokasya nodvego hṛdi jāyate ||53 ||",
  "SA08n963:121": "abhyāsena kharī bhūtaṃ cittaṃ saṃsāracāriṇam |",
  "SA08n963:122": "yena manye mahad duḥkhaṃ hṛdaye naiva vartate ||54 ||",
  "SA08n963:123": "śūlikena yathā baddhāḥ paśavo gṛhapañjare |",
  "SA08n963:124": "ekaikaśo vinaśyanti śeṣāṇāṃ nāsti sambhramaḥ ||55 ||",
  "SA08n963:125": "sukhāya kāmināmeva iyaṃ bhūmiravasthitā |",
  "SA08n963:126": "cyutāścaivopapannāśca tathāmī bāliśāḥ surāḥ ||56 ||",
  "SA08n963:127": "viṣayonmukhānāṃ maraṇānabhijñatvam",
  "SA08n963:128": "pramādāya hatāḥ sattvā mṛtyuḥ kṣaṇikaduḥkhadaḥ |",
  "SA08n963:129": "nāvabuddhayanti maraṇaṃ paśuvad vītasambhramāḥ ||57 ||",
  "SA08n963:130": "te paścād dīrghamanasaḥ kālasya vaśamāgatāḥ |",
  "SA08n963:131": "paścāttāpamayo vahnirdhakṣyate niṣpratikṣayaḥ ||58 ||",
  "SA08n963:132": "dāruṇaṃ niṣpratīkāramavaśyaṃ rūpadehinām |",
  "SA08n963:133": "maraṇaṃ kālavaśagaṃ tad viditvā''gamaṃ caret ||59 ||",
  "SA08n963:134": "viprayogāntāḥ sarve saṃyogāḥ",
  "SA08n963:135": "samāgamāḥ priyāloke viyogāścāpriyāḥ sadā |",
  "SA08n963:136": "saṃyogo viprayogānto dharmateyaṃ sanātanā ||60 ||",
  "SA08n963:137": "kṣaṇe lave muhūrte ca divārātrau tathā'dhvani |",
  "SA08n963:138": "maraṇaṃ cintayed dhīrastasya nāsti pratikriyā ||61 ||",
  "SA08n963:139": "gatakalmaṣā eva śāntimadhigacchanti",
  "SA08n963:140": "smṛtimagnyāṃ praśaṃsanti yeṣāṃ maraṇasaṃbhavā |",
  "SA08n963:141": "śreyasaikaparāṃ śānti prayāntiṃ gatakalmaṣāḥ ||62 ||",
  "SA08n963:142": "mṛtyorarthamanusmṛtya doṣo'yaṃ kasya sammataḥ |",
  "SA08n963:143": "nirdoṣaṃ hi manaḥ sarvaṃ śāntaṃ bhavati nityaśaḥ ||63 ||",
  "SA08n963:144": "tathāgataiḥ apramādaparaṃ śreṣṭhamuktam",
  "SA08n963:145": "apramādaparaṃ śreṣṭhamidamuktaṃ tathāgataiḥ |",
  "SA08n963:146": "yanmṛtyoḥ smaraṇaṃ nityamaśubhānāṃ ca varjanam ||64 ||",
  "SA08n963:147": " ||iti parivartavargaścaturthaḥ ||"
}