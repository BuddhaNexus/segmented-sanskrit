{
  "SA22n1425:0": "tattvaratnāvalokaḥ",
  "SA22n1425:1": "om namaḥ śrīsadgurupādebhyaḥ |",
  "SA22n1425:2": "anupamasukharūpī śrīnivāso'nivāso",
  "SA22n1425:3": "nirupamadaśadevīrūpavidyaḥ savidyaḥ |",
  "SA22n1425:4": "tribhuvanahitasaukhyaprāptikāro'vikāro",
  "SA22n1425:5": "jayati kamalapāṇiryāvadāśāvikāsāḥ ||1 ||",
  "SA22n1425:6": "śrīmantranītigatacārucaturthaseka-",
  "SA22n1425:7": "rūpaṃ vidanti nahi ye sphuṭaśabdaśūnyam |",
  "SA22n1425:8": "nānopadeśagaṇasaṃkulasaptabhedai-",
  "SA22n1425:9": "steṣāṃ sphuṭāvagataye kriyate prayatnaḥ ||2 ||",
  "SA22n1425:10": "saṃbhrāntabodhā nikhilā hi tīrthyā-",
  "SA22n1425:11": "stattvasya sādhyasya ca rūpavittau |",
  "SA22n1425:12": "tebhyaḥ prakṛṣṭaḥ kila tattvavettā",
  "SA22n1425:13": "vedāntavādīti [jana] pravādaḥ ||3 ||",
  "SA22n1425:14": "ānandarūpaṃ svavidaprakampyaṃ",
  "SA22n1425:15": "vedāntinaḥ sādhyamuṣanti sāntam |",
  "SA22n1425:16": "saśrāvakākhaḍgajināśca sādhya-",
  "SA22n1425:17": "micchanti rūpādyupadhervirāmam ||4 ||",
  "SA22n1425:18": "ākāraśūnyaṃ gaganendurūpaṃ",
  "SA22n1425:19": "pratyātmavedyaṃ karuṇārasaṃ ca |",
  "SA22n1425:20": "sallakṣaṇairbhūṣitamarthakāri",
  "SA22n1425:21": "dānādiniṣyandamapetasaukhyam ||5 ||",
  "SA22n1425:22": "sānandasallakṣaṇamaṇḍitāṅgaṃ",
  "SA22n1425:23": "saṃbhujyamānaṃ daśabhūmisaṃsthaiḥ |",
  "SA22n1425:24": "sattvārthakāri pravadanti sādhyaṃ",
  "SA22n1425:25": "dānadiṣaṭpāramitānayasthā ||6 ||",
  "SA22n1425:26": "saṃpūrya dānādiguṇānaśeṣān",
  "SA22n1425:27": "saṃbuddhya kṛtyaṃ sakalaṃ ca kṛtvā |",
  "SA22n1425:28": "yabhdūtakoṭeḥ karaṇaṃ ca sākṣāt",
  "SA22n1425:29": "sādhyaṃ tadapyasti nirodharūpam ||7 ||",
  "SA22n1425:30": "svābhāṅgaṇā(nā)",
  "SA22n1425:31": "śleṣi tadarthakāri",
  "SA22n1425:32": "duḥkhaiḥ sukhaiścaiva vimuktirūpam |",
  "SA22n1425:33": "aśītyanuvyañjanabhūṣitāṅga-",
  "SA22n1425:34": "mapetakalpaṃ pravadanti sādhyam ||8 ||",
  "SA22n1425:35": "svadevatākāraviśeṣaśūnyaṃ",
  "SA22n1425:36": "prāgeva saṃbhāvya sukhaṃ sphuṭaṃ sat |",
  "SA22n1425:37": "mahāsukhākhyaṃ jagadarthakāri",
  "SA22n1425:38": "cintāmaṇiprakhyamuvāca kaścit ||9 ||",
  "SA22n1425:39": "kṛtvā sākṣāt svādhipaṃ sātarūpaṃ",
  "SA22n1425:40": "paścāt tyaktvā sātamātraṃ phalaṃ syāt |",
  "SA22n1425:41": "śuddhaṃ sākṣācchakyate naiva kartuṃ",
  "SA22n1425:42": "tenākāro bhāvitaḥ svādhipasya ||10 ||",
  "SA22n1425:43": "gagaṇasamaśarīraṃ lakṣaṇairbhūṣitāṅgaṃ",
  "SA22n1425:44": "nirupamasukhapūrṇaṃ svābhayā saṃgataṃ ca |",
  "SA22n1425:45": "sphuradamitamunīndraḥ sarvasattvārthakāri",
  "SA22n1425:46": "pravadati punaranyaḥ sādhyamucchedaśūnyam ||11 ||",
  "SA22n1425:47": "kṛtvā sākṣāt svādhipaṃ sātarūpaṃ",
  "SA22n1425:48": "bhāvopekṣājñānamātraṃ phalaṃ syāt |",
  "SA22n1425:49": "āsaṃsārasthāyi sattvārthakāri",
  "SA22n1425:50": "cintāratnaprakhyamekāntaśāntam ||12 ||",
  "SA22n1425:51": "kṛtvā sākṣānmaṇḍalaṃ sātarūpaṃ",
  "SA22n1425:52": "paścāttasya svecchayā nirvṛtiṃ ca |",
  "SA22n1425:53": "sattvārthasyāpyastyabhāvo na vāsmin",
  "SA22n1425:54": "prādurbhāvo nirvṛtādasti yasmāt ||13 ||",
  "SA22n1425:55": "kṛtvā sphuṭaṃ rūpamabhīṣṭameṣāṃ",
  "SA22n1425:56": "paścānnirodhaṃ phalamāha kaścit |",
  "SA22n1425:57": "abhinnarūpaśca yato nirodho",
  "SA22n1425:58": "na pakṣabhede'pi tato'sti bhedaḥ ||14 ||",
  "SA22n1425:59": "prajñājñānāduttaraṃ bodhicittā-",
  "SA22n1425:60": "svādasturyaṃ seṣa(ka)",
  "SA22n1425:61": "māhāvaraṃ tat |",
  "SA22n1425:62": "yasmāt sarvo bhāvanāsu prayāso",
  "SA22n1425:63": "vyarthaḥ prāptastatphalasya prasiddheḥ ||15 ||",
  "SA22n1425:64": "prajñājñānāduttaraṃ prāptarāmā-",
  "SA22n1425:65": "svādasturyaṃ sekamāhādhamaṃ tat |",
  "SA22n1425:66": "yasmāt sarvo bhāvanādau prayatno",
  "SA22n1425:67": "buddhoddiṣṭo niṣphalaḥ saṃprasaktaḥ ||16 ||",
  "SA22n1425:68": "dambholibījaśrutidhautaśuddha-",
  "SA22n1425:69": "pāthojña(ja)",
  "SA22n1425:70": "bhūtāṅkurabhūtapuṣṭi |",
  "SA22n1425:71": "turīyaśasyaṃ paripākameta(ti)",
  "SA22n1425:72": "sphuṭaṃ caturthaṃ viduṣo'pi gūḍham ||17 ||",
  "SA22n1425:73": "pañcapradīpāmṛtabinducandra-",
  "SA22n1425:74": "bhrūmadhyabindudbhavamaṇḍalāni |",
  "SA22n1425:75": "vāyoḥ svarūpaṃ galaśuṇḍikādya-",
  "SA22n1425:76": "matattvarūpaṃ svayamūhanīyam ||18 ||",
  "SA22n1425:77": "svapnendrajālapratibimbamāyā-",
  "SA22n1425:78": "marīcigandharvapurāmbucandraiḥ |",
  "SA22n1425:79": "anyaiśca sarvairupamābhidheyai-",
  "SA22n1425:80": "rnaivā'sti sādhyaṃ kathitādihānyat ||19 ||",
  "SA22n1425:81": "gambhīraśūnyapratibhāsamātra-",
  "SA22n1425:82": "śāntātisūkṣmānabhilāpyaśabdaiḥ |",
  "SA22n1425:83": "nirlepanī[rū]panirañjanādyai-",
  "SA22n1425:84": "rbhrāntirna kāryā'parasādhyasattve ||20 ||",
  "SA22n1425:85": " ||tattvaratnāvalokaḥ samāptaḥ ||",
  "SA22n1425:86": "kṛtiriyaṃ paṇḍitavāgīśvarakīrtipādānām ||"
}