{
  "SA05n880:0": "sattvārādhanagāthā",
  "SA05n880:1": "ārya nāgārjunakṛtā",
  "SA05n880:2": "sattvārthameva mayi tiṣṭhati sattvaśraddhā",
  "SA05n880:3": "nānyatra sā,",
  "SA05n880:4": "hyahamaho'dhigṛhītasattvaḥ |",
  "SA05n880:5": "caryā'dhamā karuṇayā rahitā bhaved yā",
  "SA05n880:6": "saṃbhāvyate karuṇayaiva prahāṇamasyāḥ ||1 ||",
  "SA05n880:7": "sattveṣu yasya nitarāṃ karuṇāpravṛtti-",
  "SA05n880:8": "rārādhakaḥ sa mama śāsanamarmavettā |",
  "SA05n880:9": "śīlaṃ śrutiśca karuṇā ca sudhośca yasya",
  "SA05n880:10": "nityaṃ sa eva sugatārcanakṛnnigadyate || 2 ||",
  "SA05n880:11": "kalyāṇakāramadhikṛtya gato'smi siddhiṃ",
  "SA05n880:12": "sattvārthameva tanumeṣa samudvahāmi |",
  "SA05n880:13": "naivaṃ kriyeta yadi sattvahitaṃ mayā ced",
  "SA05n880:14": "vyarthaṃ karomi tanupoṣaṇamannapānaiḥ || 3 ||",
  "SA05n880:15": "sattvān hinasti manasāpi hi yaḥ sa kasmān-",
  "SA05n880:16": "māmeva saṃśrayati yo mayi nirvyapekṣaḥ |",
  "SA05n880:17": "pūjā tu sā bhavati sattvahitekṣaṇāpi",
  "SA05n880:18": "pūjyasya yā manasi tuṣṭimupādadāti || 4 ||",
  "SA05n880:19": "hiṃsātmikā paraviheṭhanasambhavā vā",
  "SA05n880:20": "pūjā na pūjyamanugacchati saṃskṛtāpi |",
  "SA05n880:21": "dārāḥ sutāśca vibhavaśca mahattva (cca) rājyaṃ",
  "SA05n880:22": "māṃsaṃ ca śoṇitavase nayate śarīram || 5 ||",
  "SA05n880:23": "yeṣāṃ priyatvamadhikṛtya mayojjhitaṃ yat",
  "SA05n880:24": "yastān viheṭhayati tena viheṭhito'ham |",
  "SA05n880:25": "sattvopakāraparamā hi mamāgrapūjā",
  "SA05n880:26": "sattvāpakāraparayā ca parābhavaḥ syāt || 6 ||",
  "SA05n880:27": "sattvān prāpya mayā kṛtāni kuśalānyārādhitāstāyinaḥ",
  "SA05n880:28": "prāptāḥ pāramitāśca sattvasamiterevārthamātiṣṭhatā |",
  "SA05n880:29": "sattvārthena samudyatena manasā mārasya bhagnaṃ balaṃ",
  "SA05n880:30": "sattvaireva tathā tathā viracitaṃ yenāsmi buddhaḥ kṛtaḥ || 7 ||",
  "SA05n880:31": "kasmin vastuni siddhyatāmiha kṛpā maitrī ca kvālambatāṃ",
  "SA05n880:32": "kvopekṣāmuditādivastuviṣayaḥ kasmin vimokṣādayaḥ |",
  "SA05n880:33": "kasyārthe karuṇāpareṇa manasaḥ kṣāntiściraṃ bhāvitā",
  "SA05n880:34": "na syurjanmani janma(ni)",
  "SA05n880:35": "priyavidhau mitraṃ yadi prāṇinaḥ || 8 ||",
  "SA05n880:36": "sattvā eva gajādibhāvagatayo dattā mayā'nekaśaḥ",
  "SA05n880:37": "sattvā eva ca pātratāmupagataṃ deyaṃ mayā grāhitāḥ |",
  "SA05n880:38": "sattvaireva vicitrabhāvagamanādasmatkṛpā vardhitā",
  "SA05n880:39": "sattvāneva na pālayāmi yadi cet kasyārthamarthaḥ kṛtaḥ || 9 ||",
  "SA05n880:40": "saṃsāre vyasanābhighātabahule na syuryadi prāṇino",
  "SA05n880:41": "janmāvartaviḍambanena yamalokaṃ prāpya sātmīkṛtāḥ |",
  "SA05n880:42": "saṃsārāttaraṇaṃ ca saugatamidaṃ mahātmyamatyadbhutaṃ",
  "SA05n880:43": "kasyārthena samīhitaṃ yadi na me sattvā bhaveyuḥ priyāḥ || 10 ||",
  "SA05n880:44": "yāvaccedaṃ jvalati jagataḥ śāsanaṃ śāsanaṃ me",
  "SA05n880:45": "tāvat stheyaṃ parahitaparairātmavadbhirbhavadbhiḥ |",
  "SA05n880:46": "śrutvā śrutvā mama viracitaṃ sattvahetorakhinnaiḥ",
  "SA05n880:47": "khedaḥ kāryo na ca tanumimaṃ muktasāraṃ bhavadbhiḥ || 11 ||",
  "SA05n880:48": "samyaksambuddhabhāṣitā sattvārādhanagāthā samāptā |"
}