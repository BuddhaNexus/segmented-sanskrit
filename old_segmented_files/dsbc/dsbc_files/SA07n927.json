{
  "SA07n927:0": "CANTO XIII",
  "SA07n927:1": "tasminvimokṣāya kṛtapratijñe",
  "SA07n927:2": "rājarṣivaṃśaprabhave maharṣau |",
  "SA07n927:3": "tatropaviṣṭe prajaharṣa loka-",
  "SA07n927:4": "statrāsa saddharmaripustu māraḥ ||1 ||",
  "SA07n927:5": "yaṃ kāmadevaṃ pravadanti loke",
  "SA07n927:6": "citrāyudhaṃ puṣpaśaraṃ tathaiva |",
  "SA07n927:7": "kāmapracārādhipatiṃ tameva",
  "SA07n927:8": "mokṣadviṣaṃ māramudāharanti ||2 ||",
  "SA07n927:9": "tasyātmajā vibhramaharṣadarpā-",
  "SA07n927:10": "stisro'ratiprītitṛṣaśca kanyāḥ |",
  "SA07n927:11": "papracchurenaṃ manaso vikāraṃ",
  "SA07n927:12": "sa tāṃśca tāścaiva vaco'bhyuvāca ||3 ||",
  "SA07n927:13": "asau munirniścayavarma bibhra-",
  "SA07n927:14": "tsattvāyudhaṃ buddhiśaraṃ vikṛṣya |",
  "SA07n927:15": "jigīṣurāste viṣayānmadīyā-",
  "SA07n927:16": "ntasmādayaṃ me manaso viṣādaḥ ||4 ||",
  "SA07n927:17": "yadi hyasau māmabhibhūya yāti",
  "SA07n927:18": "lokāya cākhyātyapavargamārgam |",
  "SA07n927:19": "śūnyastato'yaṃ viṣayo mamādya",
  "SA07n927:20": "vṛttāccyutasyeva videhabhartuḥ ||5 ||",
  "SA07n927:21": "tadyāvadevaiṣa na labdhacakṣu-",
  "SA07n927:22": "rmadrocare tiṣṭhati yāvadeva |",
  "SA07n927:23": "yāsyāmi tāvadvratamasya bhettuṃ",
  "SA07n927:24": "setuṃ nadīvega ivātivṛddhaḥ ||6 ||",
  "SA07n927:25": "tato dhanuḥ puṣpamayaṃ gṛhītvā",
  "SA07n927:26": "śarān jaganmohakarāṃśca pañca |",
  "SA07n927:27": "so'śvatthamūlaṃ sasuto'bhyagaccha-",
  "SA07n927:28": "dasvāsthyakārī manasaḥ prajānām ||7 ||",
  "SA07n927:29": "atha praśāntaṃ munimāsanasthaṃ",
  "SA07n927:30": "pāraṃ titīrṣu bhavasāgarasya |",
  "SA07n927:31": "viṣajya savyaṃ karamāyudhāgre",
  "SA07n927:32": "krīḍan śareṇedamuvāca māraḥ ||8 ||",
  "SA07n927:33": "uttiṣṭha bhoḥ kṣatriya mṛtyubhīta",
  "SA07n927:34": "cara svadharma tyaja mokṣadharmam |",
  "SA07n927:35": "bāṇaiśca yajñaiśca vinīya lokaṃ",
  "SA07n927:36": "lokātpadaṃ prāpnuhi vāsavasya ||9 ||",
  "SA07n927:37": "panthā hi niryātumayaṃ yaśasyo",
  "SA07n927:38": "yo vāhitaḥ pūrvatamairnarendraiḥ |",
  "SA07n927:39": "jātasya rājarṣikule viśāle",
  "SA07n927:40": "bhaikṣākamaślādhyamidaṃ prapattum ||10 ||",
  "SA07n927:41": "athādya nottiṣṭhasi niścitātman",
  "SA07n927:42": "bhava sthiro mā vimucaḥ pratijñām |",
  "SA07n927:43": "mayodyato hyeṣa śaraḥ sa eṃva",
  "SA07n927:44": "yaḥ śūrpake mīnaripau vimuktaḥ ||11 ||",
  "SA07n927:45": "spṛṣṭaḥ sa cānena kathaṃcidaiḍaḥ",
  "SA07n927:46": "somasya naptāpyabhavadvicittaḥ |",
  "SA07n927:47": "sa cābhavacchantanurasvatantraḥ",
  "SA07n927:48": "kṣīṇe yuge kiṃ bata durbalo'nyaḥ ||12 ||",
  "SA07n927:49": "tatkṣipramuttiṣṭha labhasva saṃjñāṃ",
  "SA07n927:50": "bāṇo hyayaṃ tiṣṭhati lelihānaḥ |",
  "SA07n927:51": "priyāvidheyeṣu ratipriyeṣu",
  "SA07n927:52": "yaṃ cakravākeṣviva notsṛjāmi ||13 ||",
  "SA07n927:53": "ityevamukto'pi yadā nirāstho",
  "SA07n927:54": "naivāsanaṃ śākyamunirbibheda |",
  "SA07n927:55": "śaraṃ tato'smai visasarja māraḥ",
  "SA07n927:56": "kanyāśca kṛtvā purataḥ sutāṃśca ||14 ||",
  "SA07n927:57": "tasmiṃstu bāṇe'pi sa vipramukte",
  "SA07n927:58": "cakāra nāsthāṃ na dhṛteścacāla |",
  "SA07n927:59": "dṛṣṭvā tathainaṃ viṣasāda māra-",
  "SA07n927:60": "ścintāparītaśca śanairjagāda ||15 ||",
  "SA07n927:61": "śailendraputrīṃ prati yena viddho",
  "SA07n927:62": "devo'pi śambhuścalito babhūva |",
  "SA07n927:63": "na cintayatyeṣa tameva bāṇaṃ",
  "SA07n927:64": "kiṃ syādacitto na śaraḥ sa eṣaḥ ||16 ||",
  "SA07n927:65": "tasmādayaṃ nārhati puṣpabāṇaṃ",
  "SA07n927:66": "na harṣaṇaṃ nāpi raterniyogam |",
  "SA07n927:67": "arhatyayaṃ bhūtagaṇairasaumyaiḥ",
  "SA07n927:68": "saṃtrāsanātarjanatāḍanāni ||17 ||",
  "SA07n927:69": "sasmāra māraśca tataḥ svasainyaṃ",
  "SA07n927:70": "vighnaṃ śame śākyamuneścikīrṣan |",
  "SA07n927:71": "nanāśrayāścānucarāḥ parīyuḥ",
  "SA07n927:72": "śaladrumaprāsagadāsihastāḥ ||18 ||",
  "SA07n927:73": "varāhamīnāśvakharoṣṭravaktrā",
  "SA07n927:74": "vyāghrarkṣasiṃhadviradānanāśca |",
  "SA07n927:75": "ekekṣaṇā naikamukhāstriśīrṣā",
  "SA07n927:76": "lambodarāścaiva pṛṣodarāśca ||19 ||",
  "SA07n927:77": "ajānusakthā ghaṭajānavaśca",
  "SA07n927:78": "daṃṣṭrāyudhāścaiva nakhāyudhāśca |",
  "SA07n927:79": "karaṅkavaktrā bahumūrtayaśca",
  "SA07n927:80": "bhagnārdhavaktrāśca mahāmukhāśca ||20 ||",
  "SA07n927:81": "bhasmāruṇā lohitabinducitrāḥ",
  "SA07n927:82": "khaṭvāṅgahastā haridhūmrakeśāḥ |",
  "SA07n927:83": "lambasrajo vāraṇalambakarṇā-",
  "SA07n927:84": "ścarmāmbarāścaiva nirambarāśca ||21 ||",
  "SA07n927:85": "śvetārdhavaktrā haritārdhakāyā-",
  "SA07n927:86": "stāmrāśca dhrūmrā harayo'sitāśca |",
  "SA07n927:87": "vyālottarāsaṅgabhujāstathaiva",
  "SA07n927:88": "praghuṣṭāghaṇṭākulamekhalāśca ||22 ||",
  "SA07n927:89": "tālapramāṇāśca gṛhītaśūlā",
  "SA07n927:90": "daṃṣṭrākarālāśca śiśupramāṇāḥ |",
  "SA07n927:91": "urabhravaktrāśca vihaṃgamākṣā",
  "SA07n927:92": "mārjāravaktrāśca manuṣyakāyāḥ ||23 ||",
  "SA07n927:93": "prakīrṇakeśāḥ śikhino'rdhamuṇḍā",
  "SA07n927:94": "raktāmbarā vyākulaveṣṭanāśca |",
  "SA07n927:95": "prahṛṣṭavaktrā bhṛkuṭīmukhāśca",
  "SA07n927:96": "tejoharāścaiva manoharāśca ||24 ||",
  "SA07n927:97": "kecidvrajanto bhṛśamāvavalgu-",
  "SA07n927:98": "ranyo'nyamāpupluvire tathānye |",
  "SA07n927:99": "cikrīḍurākāśagatāśca keci-",
  "SA07n927:100": "tkecicca cerustarumastakeṣu ||25 ||",
  "SA07n927:101": "nanarta kaścidbhramayaṃstriśūlaṃ",
  "SA07n927:102": "kaścidvipuṣphūrja gadāṃ vikarṣan |",
  "SA07n927:103": "harṣeṇa kaścidvṛṣavannanarda",
  "SA07n927:104": "kaścicatprajajvāla tanūnaruhebhyaḥ ||26 ||",
  "SA07n927:105": "evaṃvidhā bhūtagaṇāḥ samantā-",
  "SA07n927:106": "ttadbodhimūlaṃ parivārya tasthuḥ |",
  "SA07n927:107": "jighṛkṣavaścaiva jighāṃsavaśca",
  "SA07n927:108": "bharturniyogaṃ paripālayantaḥ ||27 ||",
  "SA07n927:109": "taṃ prekṣya mārasya ca pūrvarātre",
  "SA07n927:110": "śākyarṣabhasyaiva ca yuddhakālam |",
  "SA07n927:111": "na dyauścakāśe pṛthivī cakampe",
  "SA07n927:112": "prajajvaluścaiva diśaḥ saśabdāḥ ||28 ||",
  "SA07n927:113": "viṣvagvavau vāyurudīrṇavega-",
  "SA07n927:114": "stārā na rejurna babhau śaśāṅkaḥ |",
  "SA07n927:115": "tamaśca bhūyo vitatāna rātriḥ",
  "SA07n927:116": "sarve ca saṃcukṣubhire samudrāḥ ||29 ||",
  "SA07n927:117": "mahībhṛto dharmaparāśca nāgā",
  "SA07n927:118": "mahāmunervighnamamṛṣyamāṇāḥ |",
  "SA07n927:119": "māraṃ prati krodhavivṛttanetrā",
  "SA07n927:120": "niḥśaśvasuścaiva jajṛmbhire ca ||30 ||",
  "SA07n927:121": "śuddhādhivāsā vibudharṣayastu",
  "SA07n927:122": "saddharmasiddhyarthamabhipravṛttāḥ |",
  "SA07n927:123": "māre'nukampāṃ manasā pracakru-",
  "SA07n927:124": "rvirāgabhāvāttu na roṣamīyuḥ ||31 ||",
  "SA07n927:125": "tadbodhimūlaṃ samavekṣya kīrṇa",
  "SA07n927:126": "hiṃsātmanā mārabalena tena |",
  "SA07n927:127": "dharmātmabhirlokavimokṣakāmai-",
  "SA07n927:128": "rbabhūva hāhākṛtamantarīkṣe ||32 ||",
  "SA07n927:129": "upaplavaṃ dharmavidhestu tasya",
  "SA07n927:130": "dṛṣṭvā sthitaṃ mārabalaṃ maharṣiḥ |",
  "SA07n927:131": "na cukṣubhe nāpi yayau vikāraṃ",
  "SA07n927:132": "madhye gavāṃ siṃha ivopaviṣṭaḥ ||33 ||",
  "SA07n927:133": "mārastato bhūtacamūmudīrṇā-",
  "SA07n927:134": "mājñāpayāmāsa bhayāya tasya |",
  "SA07n927:135": "svaiḥ svaiḥ prabhāvairatha sāsya senā",
  "SA07n927:136": "taddhairyabhedāya matiṃ cakāra ||34 ||",
  "SA07n927:137": "keciccalannaikavilambijivhā-",
  "SA07n927:138": "stīkṣṇāgradaṃṣṭrā harimaṇḍalākṣāḥ |",
  "SA07n927:139": "vidāritāsyāḥ sthiraśaṅkukarṇāḥ",
  "SA07n927:140": "saṃtrāsayantaḥ kila nāma tasthuḥ ||35 ||",
  "SA07n927:141": "tebhyaḥ sthitebhyaḥ sa tathāvidhebhyaḥ",
  "SA07n927:142": "rūpeṇa bhāvena ca dāruṇebhyaḥ |",
  "SA07n927:143": "na vivyathe nodvivije maharṣiḥ",
  "SA07n927:144": "krīḍatsubālebhya ivoddhatebhyaḥ ||36 ||",
  "SA07n927:145": "kaścittato roṣavivṛttadṛṣṭi-",
  "SA07n927:146": "stasmai gadāmudyamayāṃcakāra |",
  "SA07n927:147": "tastambha bāhuḥ sagadastato'sya",
  "SA07n927:148": "puraṃdarasyeva pura savajraḥ ||37 ||",
  "SA07n927:149": "kecitsamudyamya śilāstarūṃśca",
  "SA07n927:150": "viṣehire naiva munau vimoktum |",
  "SA07n927:151": "petuḥ savṛkṣāḥ saśilāstathaiva",
  "SA07n927:152": "vajrāvabhagnā iva vindhyapādāḥ ||38 ||",
  "SA07n927:153": "kaiścitsamutpatya nabho vimuktāḥ",
  "SA07n927:154": "śilāśca vṛkṣāśca paraśvadhāśca |",
  "SA07n927:155": "tasthurnabhayasyeva na cāvapetuḥ",
  "SA07n927:156": "saṃdhyābhrapādā iva naikavarṇāḥ ||39 ||",
  "SA07n927:157": "cikṣepa tasyopari dīptamanyaḥ",
  "SA07n927:158": "kaḍaṅgaraṃ parvataśṛṅgamātram |",
  "SA07n927:159": "yanmuktapātraṃ gaganasthameva",
  "SA07n927:160": "tasyānubhāvācchatadhā paphāla ||40 ||",
  "SA07n927:161": "kaścijjvalannarka ivoditaḥ khā-",
  "SA07n927:162": "daṅgāravarṣa mahadutsasarja |",
  "SA07n927:163": "cūrṇāni cāmīkarakandarāṇāṃ",
  "SA07n927:164": "kalpātyaye meruriva pradīptaḥ ||41 ||",
  "SA07n927:165": "tadbodhimūle pravikīryamāṇa-",
  "SA07n927:166": "maṅgāravarṣa tu savisphuliṅgam |",
  "SA07n927:167": "maitrīvihārādṛṣisattamasya",
  "SA07n927:168": "babhūva raktotpalapattravarṣaḥ ||42 ||",
  "SA07n927:169": "śarīracittavyasanātapaistai-",
  "SA07n927:170": "revaṃvidhaistaiśca nipātyamānaiḥ |",
  "SA07n927:171": "naivāsanācchākyamuniścacāla",
  "SA07n927:172": "svaniścayaṃ bandhumivopaguhya ||43 ||",
  "SA07n927:173": "athāpare nirjigilurmukhebhyaḥ",
  "SA07n927:174": "sarpānvijīrṇebhya iva drumebhyaḥ |",
  "SA07n927:175": "te mantrabaddhā iva tatsamīpe",
  "SA07n927:176": "na śaśvasurnotsasṛpurna celuḥ ||44 ||",
  "SA07n927:177": "bhūtvāpare vāridharā bṛhantaḥ",
  "SA07n927:178": "savidyutaḥ sāśanicaṇḍaghoṣāḥ |",
  "SA07n927:179": "tasmindrume tatyajuraśmavarṣaṃ",
  "SA07n927:180": "tatpuṣpavarṣaṃ ruciraṃ babhūva ||45 ||",
  "SA07n927:181": "cāpe'tha bāṇo nihito'pareṇa",
  "SA07n927:182": "jajvāla tatraiva na niṣpapāta |",
  "SA07n927:183": "anīśvarasyātmani dhūyamāno",
  "SA07n927:184": "durmarṣaṇasyeva narasya manyuḥ ||46 ||",
  "SA07n927:185": "pañceṣavo'nyena tu vipramuktā-",
  "SA07n927:186": "stasthurnabhasyeva munau na petuḥ |",
  "SA07n927:187": "saṃsārabhīrorviṣayapravṛttau",
  "SA07n927:188": "pañcendriyāṇīva parikṣakasya ||47 ||",
  "SA07n927:189": "jighāsayānyaḥ prasasāra ruṣṭo",
  "SA07n927:190": "gadāṃ gṛhītvābhimukho maharṣeḥ |",
  "SA07n927:191": "so'prāptakāmo vivaśaḥ papāta",
  "SA07n927:192": "doṣeṣvivānarthakareṣu lokaḥ ||48 ||",
  "SA07n927:193": "strī meghakālī tu kapālahastā",
  "SA07n927:194": "kartu maharṣeḥ kila cittamoham |",
  "SA07n927:195": "babhrāma tatrāniyataṃ na tasthau",
  "SA07n927:196": "calātmano buddhirivāgameṣu ||49 ||",
  "SA07n927:197": "kaścitpradīptaṃ praṇidhāya cakṣu-",
  "SA07n927:198": "rnetrāgnināśīviṣavaddidhakṣuḥ |",
  "SA07n927:199": "tatraiva nāsīnamṛṣiṃ dadarśa",
  "SA07n927:200": "kāmātmakaḥ śreya ivopadiṣṭam ||50 ||",
  "SA07n927:201": "gurvī śilāmudyamayaṃstathānyaḥ",
  "SA07n927:202": "śaśrāma moghaṃ vihataprayatnaḥ |",
  "SA07n927:203": "niḥśreyasaṃ jñānasamādhigamyaṃ",
  "SA07n927:204": "kāyaklamairdharmamivāptukāmaḥ ||51 ||",
  "SA07n927:205": "tarakṣusiṃhākṛtayastathānye",
  "SA07n927:206": "praṇeduruccairmahataḥ praṇādān |",
  "SA07n927:207": "sattvāni yaiḥ saṃcukucuḥ samantā-",
  "SA07n927:208": "dvajrāhatā dyauḥ phalatīti mattvā ||52 ||",
  "SA07n927:209": "mṛgā gajāścārtaravān sṛjanto",
  "SA07n927:210": "vidudruvuścaiva nililyire ca |",
  "SA07n927:211": "rātrau ca tasyāmahanīva digbhyaḥ",
  "SA07n927:212": "khagā ruvantaḥ paripeturārtāḥ ||53 ||",
  "SA07n927:213": "teṣāṃ praṇādaistu tathāvidhaistai",
  "SA07n927:214": "sarveṣu bhūteṣvapi kampiteṣu |",
  "SA07n927:215": "munirna tatrāsa na saṃcukoca",
  "SA07n927:216": "ravairgarutmāniva vāyasānām ||54 ||",
  "SA07n927:217": "bhayāvahebhyaḥ pariṣadgaṇebhyo",
  "SA07n927:218": "yathā yathā naiva munirbibhāya |",
  "SA07n927:219": "tathā tathā dharmabhṛtāṃ sapatnaḥ",
  "SA07n927:220": "śokācca roṣācca sasāda māraḥ ||55 ||",
  "SA07n927:221": "bhūtaṃ tataḥ kiṃciddṛśyarūpaṃ",
  "SA07n927:222": "viśiṣṭabhūtaṃ gaganasthameva |",
  "SA07n927:223": "dṛṣṭavarṣaye dugdhamavairaruṣṭaṃ",
  "SA07n927:224": "māraṃ babhāṣe mahatā svareṇa ||56 ||",
  "SA07n927:225": "moghaṃ śramaṃ nārhasi māra kartuṃ",
  "SA07n927:226": "hiṃsrātmatāmutsṛja gaccha śarma |",
  "SA07n927:227": "naiṣa tvayā kampayituṃ hi śakyo",
  "SA07n927:228": "mahāgirirmerurivānilena ||57 ||",
  "SA07n927:229": "apyuṣṇabhāvaṃ jvalanaḥ prajahyā-",
  "SA07n927:230": "dāpo dravatvaṃ prathivī sthiratvam |",
  "SA07n927:231": "anekakalpācitapuṇyakarmā",
  "SA07n927:232": "na tveva jahyādvyavasāyameṣaḥ ||58 ||",
  "SA07n927:233": "yo niścayo hyasya parākramaśca",
  "SA07n927:234": "tejaśca yadyā ca dayā prajāsu |",
  "SA07n927:235": "aprāpya notthāsyati tattvameṣa",
  "SA07n927:236": "tamāṃsyahatveva sahasraraśmiḥ ||59 ||",
  "SA07n927:237": "kāṣṭhaṃ hi mathnan labhate hutāśaṃ",
  "SA07n927:238": "bhūmiṃ khananvindati cāpi toyam |",
  "SA07n927:239": "nirbandhinaḥ kiṃcana nāstyasādhyaṃ",
  "SA07n927:240": "nyāyena yuktaṃ ca kṛtaṃ ca sarvam ||60 ||",
  "SA07n927:241": "tallokamārta karuṇāyamāno",
  "SA07n927:242": "rogeṣu rāgādiṣu vartamānam |",
  "SA07n927:243": "mahābhiṣaṅga nārhati vighnameṣa",
  "SA07n927:244": "jñānauṣadhārtha parikhidyamānaḥ ||61 ||",
  "SA07n927:245": "hṛte ca loke bahubhiḥ kumārgaiḥ",
  "SA07n927:246": "sanmārgamanvicchati yaḥ śrameṇa |",
  "SA07n927:247": "sa daiśikaḥ kṣobhayituṃ na yuktaṃ",
  "SA07n927:248": "sudeśikaḥ sārtha iva pranaṣṭe ||62 ||",
  "SA07n927:249": "sattveṣu naṣṭeṣu mahāndhakāre",
  "SA07n927:250": "jñānapradīpaḥ kriyamāṇa eṣaḥ |",
  "SA07n927:251": "āryasya nirvāpayituṃ na sādhu",
  "SA07n927:252": "prajvālyamānastamasīva dīpaḥ ||63 ||",
  "SA07n927:253": "dṛṣṭvā ca saṃsāramaye mahaughe",
  "SA07n927:254": "magnaṃ jagatpāramavindamānam |",
  "SA07n927:255": "yaścedamuttārayituṃ pravṛttaḥ",
  "SA07n927:256": "kaścintayettasya tu pāpamāryaḥ ||64 ||",
  "SA07n927:257": "kṣamāśipho dhairyavigāḍhamūla-",
  "SA07n927:258": "ścāritrapuṣpaḥ smṛtibuddhiśākhaḥ |",
  "SA07n927:259": "jñānadrumo dharmaphalapradātā",
  "SA07n927:260": "notpāṭanaṃ hyarhati vardhamānaḥ ||65 ||",
  "SA07n927:261": "baddhāṃ dṛḍhaiścetasi mohapāśai-",
  "SA07n927:262": "ryasya prajāṃ mokṣayituṃ manīṣā |",
  "SA07n927:263": "tasmin jighāṃsā tava nopapannā",
  "SA07n927:264": "śrānte jagadbandhanamokṣahetoḥ ||66 ||",
  "SA07n927:265": "bodhāya karmāṇi hi yānyanena",
  "SA07n927:266": "kṛtāni teṣāṃ niyato'dya kālaḥ |",
  "SA07n927:267": "sthāne tathāsminnupaviṣṭa eṣa",
  "SA07n927:268": "yathaiva pūrve munayastathaiva ||67 ||",
  "SA07n927:269": "eṣā hi nābhirvasudhātalasya",
  "SA07n927:270": "kṛtsnena yuktā parameṇa dhāmnā |",
  "SA07n927:271": "bhūmerato'nyo'sti hi na pradeśo",
  "SA07n927:272": "vegaṃ samādherviṣaheta yo'sya ||68 ||",
  "SA07n927:273": "tanmā kṛthā śokamupehi śāntiṃ",
  "SA07n927:274": "mā bhūnmahimnā tava māra mānaḥ |",
  "SA07n927:275": "viśrambhituṃ na kṣamamadhuvā śrī-",
  "SA07n927:276": "ścale pade vismayamabhyupaiṣi ||69 ||",
  "SA07n927:277": "tataḥ sa saṃśrutya ca tasya tadvaco",
  "SA07n927:278": "mahāmuneḥ prekṣya ca niṣprakampatām |",
  "SA07n927:279": "jagāma māro vimano hatodyamaḥ",
  "SA07n927:280": "śarairjagaccetasi yairvihanyate ||70 ||",
  "SA07n927:281": "gatapraharṣā viphalīkṛtaśramā",
  "SA07n927:282": "praviddhapāṣāṇakaḍaṅgaradrumā |",
  "SA07n927:283": "diśaḥ pradudrāva tato'sya sā camū-",
  "SA07n927:284": "rhatāśrayeva dviṣatā dviṣaccamūḥ ||71 ||",
  "SA07n927:285": "dravati saparipakṣe nirjitai puṣpaketau",
  "SA07n927:286": "jayatijitamaske nīrajaske maharṣau |",
  "SA07n927:287": "yuvatiriva sahāsā dyauścakāśe sacandrā",
  "SA07n927:288": "surabhi ca jalagarbha puṣpavarṣa papāta ||72 ||",
  "SA07n927:289": "iti buddhacarite mahākāvye'śvaghoṣakṛte",
  "SA07n927:290": "māravijayo nāma trayodaśaḥ sargaḥ ||13 ||"
}