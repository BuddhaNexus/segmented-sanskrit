{
  "S04n368:0": "5. sarvākāra sarvasattva prabodhana bodhicaryāvatāraṇa prakaraṇa",
  "S04n368:1": "atha sarvanīvaraṇaviṣkambhī sugatātmajaḥ |",
  "S04n368:2": "sāṃjalirbhagavantaṃ taṃ praṇatvā caivamabravīt ||",
  "S04n368:3": "bhagavansa mahāsattvo lokeśvara jagatprabhuḥ |",
  "S04n368:4": "kadeha samupāgached draṣṭumicchāmi taṃ prabhum ||",
  "S04n368:5": "iti taduktamākarṇya bhagavān sa munīśvaraḥ |",
  "S04n368:6": "viṣkambhinaṃ mahāsattvaṃ tamālokyaivamādiśat || 47",
  "S04n368:8": "viṣkambhin sa mahāsattvo nāgacchediha sāṃpratam |",
  "S04n368:9": "anyatra narake sattvānuddhartumabhigacchati ||",
  "S04n368:10": "sarvatrāpi svayaṃ gatvā saṃpaśyannarakāśritān |",
  "S04n368:11": "sarvān sattvān samuddhṛtya preṣayati sukhāvatīm ||",
  "S04n368:12": "evaṃ sa sarvadā sattvān svayaṃ paśyan dine dine |",
  "S04n368:13": "asaṃkhyeyān samuddhṛtya preṣayati sukhāvatīm ||",
  "S04n368:14": "evaṃ kurvan sa lokeśo bodhicaryāvrataṃ caran |",
  "S04n368:15": "asaṃkhyapuṇyaratnādyaśrīsamṛddho virājate ||",
  "S04n368:16": "tasya puṇyamasaṃkhyeyamaprameyaṃ bahūttamam |",
  "S04n368:17": "sarvairapi munīndraistatpramātuṃ naiva śakyate ||",
  "S04n368:18": "ityevaṃ sugataiḥ sarvaiḥ purākhyātaṃ mayā śrutam |",
  "S04n368:19": "tadatrāhaṃ pravakṣyāmi śṛṇudhyaṃ yūyamādarāt ||",
  "S04n368:20": "tadyathābhūt purā śāstā śikhi nāma tathāgataḥ |",
  "S04n368:21": "sarvajño'rhanmahābhijñoḥ dharmarājo munīśvaraḥ ||",
  "S04n368:22": "sarvavidyādhirājendraḥ saṃbuddhaḥ sugato jinaḥ |",
  "S04n368:23": "mārajit sarvalokendrastraidhātukavināyakaḥ ||",
  "S04n368:24": "tadāsaṃ bodhisattvo'haṃ dānaśūro'bhidho gṛhī |",
  "S04n368:25": "sadādānarato dhīraḥ sarvasattvahitārthabhṛt ||",
  "S04n368:26": "sadā sa śikhinastasya munīndrasya jagadguroḥ |",
  "S04n368:27": "satkṛtya śraddhayā nityaṃ prābhajan samupasthitaḥ ||",
  "S04n368:28": "tadā tena munīndreṇa samākhyātaṃ mayā śrutam |",
  "S04n368:29": "lokeśvarasya saddharmasādhanodbhavakauśalam ||",
  "S04n368:30": "iti tena munīndreṇa samāakhyātaṃ niśamya saḥ |",
  "S04n368:31": "bodhisattvo mahāsattvo viṣkambhī caivamabravīt ||",
  "S04n368:32": "bhagavan kidṛśaṃ tasya lokeśasya mahātmanaḥ |",
  "S04n368:33": "saddharmasādhanodbhūtaṃ kauśalaṃ bhavatā śrutam ||",
  "S04n368:34": "bhagavanstatsamākhyāya sarvānasmān prabodhaya |",
  "S04n368:35": "sarvalokā ime śrutvā bhaveyustadguṇāratāḥ || 48",
  "S04n368:37": "iti saṃprārthitaṃ tena śrutvāsau bhagavān jinaḥ |",
  "S04n368:38": "sarvāṃllokān sabhāsīnān samālokyaivamādiśat ||",
  "S04n368:39": "yadā sa bhagavāṃcchāstā śikhī tathāgato jinaḥ |",
  "S04n368:40": "sarvalokasabhāmadhye sasāṃghikaḥ samāśritaḥ ||",
  "S04n368:41": "ādimadhyāntakalyāṇaṃ saṃbodhiguṇasādhanam |",
  "S04n368:42": "saddharmaṃ samupādeṣṭuṃ samārabhejjagaddhite ||",
  "S04n368:43": "tadā tasya mukhadvārānnānāvarṇāḥ suraśmayaḥ |",
  "S04n368:44": "vinirgatā jagatsarvamavabhāsya pracerire ||",
  "S04n368:45": "kṛtvā sarvatra lokeṣu subhadrāṇi samantataḥ |",
  "S04n368:46": "punarāgatya sā kāntistadāśrama upāgatāḥ ||",
  "S04n368:47": "śikhinaṃ taṃ mahābhijñaṃ dharmarājaṃ munīśvaram |",
  "S04n368:48": "tridhā pradakṣiṇīkṛtya tanmukhājye samāviśat ||",
  "S04n368:49": "tatsatpuṇyaprabhāṃ dṛṭvā lokeśvaraḥ sa vismitaḥ |",
  "S04n368:50": "amitābhaṃ jinaṃ natvā papracchaivaṃ samādarāt ||",
  "S04n368:51": "bhagavan kasya satpuṇyakāntiriyaṃ samāgatā |",
  "S04n368:52": "tadbhavān samupādiśya saṃbodhayatu no guro ||",
  "S04n368:53": "iti taduktamākarṇya bhagavān so'mitaprabhaḥ |",
  "S04n368:54": "lokeśvaraṃ mahāsattvaṃ tamālokyaivamādiśat ||",
  "S04n368:55": "kulaputra śikhī nāma saṃbuddho'rhanmunīśvaraḥ |",
  "S04n368:56": "sarvajñastrigacchāstā dharmarājastathāgataḥ ||",
  "S04n368:57": "vihāre jetakodyāne samāśritaḥ sasāṃghikaḥ ||",
  "S04n368:58": "sarvalokasabhāmadhye samāsīnaḥ prabhāsayan |",
  "S04n368:59": "saddharmaṃ samupādeṣṭuṃ prārambhaṃ kurute'dhunā ||",
  "S04n368:60": "tasyeyaṃ suprabhākāntirmukhadvārādvinirgatā |",
  "S04n368:61": "sarvatra bhuvaneṣvevamavabhāsya pracaryate ||",
  "S04n368:62": "ihāpi samupāyātā bhāsayantī pracāritā |",
  "S04n368:63": "parāvṛtya munestasya mukhe prāviśate'dhunā ||",
  "S04n368:64": "ityādiṣṭaṃ munīndreṇa lokeśvaraḥ prasāditaḥ |",
  "S04n368:65": "amitābhaṃ munīndraṃ taṃ praṇatvaivamabhāṣata || 49",
  "S04n368:67": "bhagavan dharmarājaṃ taṃ draṣṭumicchāmi sāṃpratam |",
  "S04n368:68": "tattatrāhaṃ gatiṣyāmi tadājñāṃ dātumarhati ||",
  "S04n368:69": "iti saṃprārthitaṃ tena lokeśena niśamya saḥ |",
  "S04n368:70": "amitābho munīndrastaṃ lokeśamevamabavrīt ||",
  "S04n368:71": "kulaputra munīndraṃstaṃ yadi draṣṭuṃ tvamicchasi |",
  "S04n368:72": "gaccha madvacanenāpi kauśalyaṃ spraṣṭumarhasi ||",
  "S04n368:73": "padmaṃ samupasaṃsthāpya tasya paśyan sabhāmapi |",
  "S04n368:74": "samupāśritya saddharmaṃ śrutvā gacchānumoditaḥ ||",
  "S04n368:75": "ityādiṣṭaṃ munīndreṇa śrutvā lokeśvaro mudā |",
  "S04n368:76": "sāṃjalistaṃ jinaṃ natvā saṃbhāsayaṃstato'carat ||",
  "S04n368:77": "yadā tataḥ sukhāvatyāṃ saṃprasthitaḥ sa bhāsayan |",
  "S04n368:78": "tadā sarvā mahī sābdhiḥ sāgādhā ca prakampitā ||",
  "S04n368:79": "pravarṣādviyato hemaratnamayaṃ mahotpalam |",
  "S04n368:80": "nirutpātaṃ śubhotsāhaṃ prāvartata samantataḥ ||",
  "S04n368:81": "tadāśramamahodyāne kalpavṛkṣāḥ samutthitāḥ |",
  "S04n368:82": "divyavastrasuvarṇādiratnālaṃkāralambitāḥ ||",
  "S04n368:83": "nānākusumavṛkṣāśca sugaṃdhipuṣpaśobhitāḥ |",
  "S04n368:84": "anekafalavṛkṣāśca divyarasafalānatāḥ ||",
  "S04n368:85": "aṣṭāṃguṇasaṃpannajalapūrṇāḥ sarovarāḥ |",
  "S04n368:86": "nānāpuṣpābhisaṃkīrṇāḥ prādurbhūtā manoramāḥ ||",
  "S04n368:87": "vividhapuṣpavarṇāṇi dravyāṇi vividhānyapi |",
  "S04n368:88": "hemādidhāturatnāni vastrāṇi bhūṣaṇāni ca ||",
  "S04n368:89": "suvarṇasurasāsvādasaṃpannabhojanānyapi |",
  "S04n368:90": "dhānyādivrīhijātāni pravarṣanta tadāśrame ||",
  "S04n368:91": "tatra ca saptaratnāni saṃjātāni jināśrame |",
  "S04n368:92": "sarvā bhūmiśca sauvarṇā nirbhāsā saṃbabhau tadā ||",
  "S04n368:93": "tadā lokeśvara padmaṃ sahastrapatraṃ suvarṇikam |",
  "S04n368:94": "saptaratnamayo jvālaṃ samādāya tataścaran || 50",
  "S04n368:96": "evaṃ tatra subhadrāṇāṃ nimittaṃ saṃprakāśayan |",
  "S04n368:97": "avabhāsya jagallokaṃ samālokya samantataḥ ||",
  "S04n368:98": "prāṇino duḥkhinaḥ sarvān samuddhṛtya prayatnataḥ |",
  "S04n368:99": "bodhimārge pratiṣṭhāpya saṃpreṣayan sukhāvatīm ||",
  "S04n368:100": "sudhāraśmiṃ samutsṛjya saṃbhāsayan samantataḥ |",
  "S04n368:101": "saṃbuddhaṃ śikhinaṃ tadvihāramupācarat ||",
  "S04n368:102": "tāni bhadranimittāni vilokya tatsabhāśritaḥ |",
  "S04n368:103": "ratnapāṇirmahāsattva boddhisattvo'bhilokayan ||",
  "S04n368:104": "vismitaḥ sahasotthāya pustaḥ samupācarat |",
  "S04n368:105": "udvahannuttarāsaṃgaṃ jānubhyāṃ bhuvi saṃsthitaḥ ||",
  "S04n368:106": "bhagavantaṃ munīndraṃ taṃ saṃbuddhaśikhinaṃ mudā |",
  "S04n368:107": "kṛtāṃjalipuṭo natvā papracchaivaṃ samādarāt ||",
  "S04n368:108": "bhagavan kasya prabhākāntiriyamiha samāgatā |",
  "S04n368:109": "mahadbhadranimittāni dṛśyante prodbhavāni ca ||",
  "S04n368:110": "bhagavanstatsamādiśya sarvānimān sabhāśritān |",
  "S04n368:111": "vismayākulacittāntaḥ prabodhayitumarhati ||",
  "S04n368:112": "iti saṃprārthitaṃ tena śrutvā śikhī tathāgataḥ |",
  "S04n368:113": "ratnapāṇiṃ mahāsattvaṃ taṃ paśyannevamādiśat ||",
  "S04n368:114": "ratnapāṇe mahāsattva dṛśyante yadihādhunā |",
  "S04n368:115": "mahadbhadranimittāni saṃjātāni samantataḥ ||",
  "S04n368:116": "taddhetuṃ saṃpravakṣyāmi śṛṇudhvamidamādarāt |",
  "S04n368:117": "yūyaṃ sarve prasīdantaḥ pratibudhyānumodata ||",
  "S04n368:118": "yaḥ śrīmāṃjagannātho bodhisattvo jinātmajaḥ |",
  "S04n368:119": "sarvasaṃghādhipaḥ śāsta sarvalokādhipeśvaraḥ |",
  "S04n368:120": "samantabhadrakārī sa āryāvalokiteśvaraḥ |",
  "S04n368:121": "sattvān paśyan samuddhartuṃ sukhāvatyāṃ viniścaran ||",
  "S04n368:122": "puṇyaraśmiṃ samutsṛjya saṃbhāsayan samantataḥ |",
  "S04n368:123": "śodhayaṃstrijagallokaṃ kṛtvā bhadraṃ samantataḥ || 51",
  "S04n368:124": "pāpino'pi durācārān sarvatra narakeṣvapi |",
  "S04n368:125": "nimagnāṃstān samālokya samuddhṛtya samantata ||",
  "S04n368:126": "bodhayitvā prayatnena kṛtvā saddharmalālasān |",
  "S04n368:127": "mameha darśanaṃ kartuṃ samupāgacchapi sāṃpratam |",
  "S04n368:128": "tasyeyaṃ suprabhā kāntirbhāsayantī samāgatā ||",
  "S04n368:129": "īdṛgdranimittāni saṃjātāni samaṃtataḥ |",
  "S04n368:130": "bhadraheturayaṃ tasya lokeśasyāgataḥ khalu ||",
  "S04n368:131": "ityādiṣṭaṃ munīndreṇa ratnapāṇirniśamya saḥ |",
  "S04n368:132": "saṃbuddhaṃ taṃ sabhāṃ tāṃ ca samālokyaivamabravīt ||",
  "S04n368:133": "bhagavan sa mahāsattvo lokeśvaro jagatprabhuḥ |",
  "S04n368:134": "nāgacchati kadāgatcched draṣṭumicchāmi taṃ prabhum ||",
  "S04n368:135": "iti tenoditaṃ śrutvā bhagavān sa śikhī jinaḥ |",
  "S04n368:136": "ratnapāṇiṃ tamālokya sabhāṃ cāpyevamādiśat ||",
  "S04n368:137": "āgacchet sa mahāsattvo lokeśvaraḥ suduḥkhitaḥ |",
  "S04n368:138": "sattvān sarvān samuddhṛtya preṣayitvā sukhāvatīm ||",
  "S04n368:139": "prathamamiha māṃ draṣṭumāgacchet sa kṛpānidhiḥ |",
  "S04n368:140": "tadā taṃ trijagannāthaṃ paśca bhaja samādarāt ||",
  "S04n368:141": "ityādiṣṭaṃ munīndreṇa śrutvā sa ratnabhṛnmudā |",
  "S04n368:142": "saha sarvasabhālokaistasthau taddarśanotsukaḥ ||",
  "S04n368:143": "tadāsau trijagannātho lokeśvaraḥ prabhāsayan |",
  "S04n368:144": "dūrāttaṃ sugataṃ paśyan vihāre samupāviśat ||",
  "S04n368:145": "taṃ lokeśaṃ samāyātaṃ samīkṣya sugatātmajam |",
  "S04n368:146": "sarve lokāḥ sabhāsīnāḥ samutthāya praṇemire ||",
  "S04n368:147": "ratnapāṇistamāyātaṃ saṃpaśyan sahasotthitaḥ |",
  "S04n368:148": "sāṃjaliḥ samupāgamya vavande tatpadāmbuje ||",
  "S04n368:149": "evaṃ sa vandyamānastaiḥ sarvalokaiḥ prabhāsayan |",
  "S04n368:150": "śikhinaṃ taṃ samālokya purataḥ samupācarat || 52",
  "S04n368:152": "taṃ samāyātamālokya bhagavān sa śikhī mudā |",
  "S04n368:153": "svāgataṃ te mahāsattva kauśalamityapṛcchata ||",
  "S04n368:154": "ityādiṣṭaṃ munīndreṇa śrutvā sa sugatātmajaḥ |",
  "S04n368:155": "kauśalaṃ me sadā śāstariti vadannupācarat ||",
  "S04n368:156": "tatrāsau trijagannāthaḥ śikhinaṃ taṃ munīśvaram |",
  "S04n368:157": "vanditvā taṃ mahāpadmamupasthāpyaivabravīt ||",
  "S04n368:158": "bhagavannamitābhena śāstremaṃ prahitaṃ kajam |",
  "S04n368:159": "kuśalaṃ cāpi sarvatra pṛcchata te samantataḥ ||",
  "S04n368:160": "iti taduktamākarṇya bhagavān sa śikhī mudā |",
  "S04n368:161": "gṛhītvā taṃ mahāpadmaṃ vāme sthāpyaivamabravīt ||",
  "S04n368:162": "sarvatra kauśalamatra kvacittasyāpi kauśalam |",
  "S04n368:163": "iti pṛṣṭvā munīndraiśca tanevaṃ paryapṛcchata ||",
  "S04n368:164": "kulaputra tvayā sattvāḥ kiyanto narakāśritāḥ |",
  "S04n368:165": "samuddhṛtya śubhe sthāpya preṣitāste sukhāvatīm ||",
  "S04n368:166": "iti pṛṣṭe munīndreṇa lokeśvaro vilokya saḥ |",
  "S04n368:167": "saṃbuddhaṃ taṃ sabhāṃ cāpi samālokyaivamabravīt ||",
  "S04n368:168": "bhagavan bahavo'saṃkhyeyāḥ sattvā narakāśritāḥ |",
  "S04n368:169": "te sarve'pi prayatnena mayālokya samuddhṛtāḥ ||",
  "S04n368:170": "tadyathā ye mahāduṣṭā avīcau karmabhoginaḥ |",
  "S04n368:171": "raurave kālasūtre ca hāhavatapane'pi ca ||",
  "S04n368:172": "tāpane'gnidhaṭe ye ca śālmalike ca pāpinaḥ |",
  "S04n368:173": "saṃghāate cāndhakāre ca śītodake'sipatrake ||",
  "S04n368:174": "evamanyaṣu sarveṣu narakeṣu samantataḥ |",
  "S04n368:175": "svakṛtakarmabhuṃjānāṃ tiṣṭhanto duḥkhabhoginaḥ ||",
  "S04n368:176": "tīvraduḥkhāgnisantaptā mūḍhā viluptacetanāḥ |",
  "S04n368:177": "te sarve'pi mayoddhṛtya saṃpreṣitāḥ sukhāvatīm ||",
  "S04n368:178": "bhūtāḥ pretāḥ piśācāśca kṣuptipāsāgnidāhitāaḥ |",
  "S04n368:179": "sūcimukhādayo duṣṭā viṇmūtrāmedhyabhoginaḥ || 53",
  "S04n368:181": "paśavo'pi ca ye duṣṭāḥ pakṣiṇo'pi durāratāḥ |",
  "S04n368:182": "kṛmikīṭādayaścāpi svakarmafalabhoginaḥ ||",
  "S04n368:183": "te'pi sarve mayālokya mocayitvā svakarmataḥ |",
  "S04n368:184": "samuddhṛtya prayatnene saṃpreṣitāḥ sukhāvatīm ||",
  "S04n368:185": "evamanye'pi sattvā ye martyā daityāḥsurā api |",
  "S04n368:186": "adharmābhiratā duṣṭā bhraṣṭā narakagāminaḥ ||",
  "S04n368:187": "te'pi sarve mayāalokya bodhiyitvā prayatnataḥ |",
  "S04n368:188": "sadharme saṃpratiṣṭhāpya saṃpreṣitā jinālaye ||",
  "S04n368:189": "evaṃ nityaṃ mayālokya prāṇino durito'rddhatāḥ |",
  "S04n368:190": "sarve'pi narakāsīnāstīvraduḥkhāgnitāpitāḥ ||",
  "S04n368:191": "dine dine'pyasaṃkhyeyā samuddhṛtya prayatnataḥ |",
  "S04n368:192": "bodhiyitvā śubhe sthāpya cārayitvā susaṃvare |",
  "S04n368:193": "bodhimārge niyujyaivaṃ saṃpreṣitā jinālaye ||",
  "S04n368:194": "yathā mayā pratijñātaṃ tathā karttavyameva tat |",
  "S04n368:195": "iti nityaṃ samālokya sattvā dharme'bhiyojitāḥ ||",
  "S04n368:196": "yāvantaḥ prāṇinaḥ sarve yāvanna bodhibhāginaḥ |",
  "S04n368:197": "tāvadahaṃ na saṃbodhiṃ saṃprāpnuyāṃ jagaddhite ||",
  "S04n368:198": "iti dṛḍhā pratijñā me yāvanna paripūritā |",
  "S04n368:199": "tāvat sattvān samālokya samuddhṛtya prayatnataḥ ||",
  "S04n368:200": "bodhayitvāpi kṛtvā ca caturbrahmavihāriṇaḥ |",
  "S04n368:201": "bodhimārge pratiṣṭhāpya preṣayeyaṃ sukhāvatīm ||",
  "S04n368:202": "ityevaṃ bhagavaṃcchāste bodhicaryāṃ samācaran |",
  "S04n368:203": "sarvasattvahitaṃ kṛtvā care tridhātukeṣvapi ||",
  "S04n368:204": "evaṃ nityaṃ jagallokia kṛtvā bhadrasukhotsavam |",
  "S04n368:205": "pracaraṃ pracarāmyevaṃ cariṣyāmi sadā bhave ||",
  "S04n368:206": "ityuktvā sa mahāsattvo lokeśvaro jinātmajaḥ |",
  "S04n368:207": "bhūyastaṃ śikhinaṃ natvā samanujñāmayācata ||",
  "S04n368:208": "bhagavan gantumicchāmi sattvānuddhartumanyataḥ |",
  "S04n368:209": "tadanujñāṃ pradatvā me prasīdatu jagaddhite || 54",
  "S04n368:211": "iti taduktamākarṇya sa śikhī bhagavān mudā |",
  "S04n368:212": "lokeśvaraṃ mahābhijñaṃ tamālokyāivamabravīt ||",
  "S04n368:213": "sidhyatu te mahāsattva kāryaṃ saṃbodhisādhanam |",
  "S04n368:214": "gaccha loke hitaṃ kurvan saṃcarasva sukhaṃ sadā ||",
  "S04n368:215": "ityādiṣṭaṃ munīndreṇa lokeśvaro jagatprabhuḥ |",
  "S04n368:216": "śikhinaṃ dharmarājaṃ taṃ praṇatvā prācarattataḥ ||",
  "S04n368:217": "prakramittvā tataḥ so'gnipiṇḍa iva samujjvalan |",
  "S04n368:218": "ākāśe'ntarhito'nyatra bhuvene bhāsayan yayau ||",
  "S04n368:219": "tamevaṃ khe gataṃ dṛṣṭvā ratnapāṇiḥ sa vismitaḥ |",
  "S04n368:220": "śikhinaṃ bhagavantaṃ taṃ samālokyaivamabravīt ||",
  "S04n368:221": "bhagavaṃstrijagadbharturlokeaśsya mahānmanaḥ |",
  "S04n368:222": "kiyatsukṛtasaṃbhāraṃ vidyate tatsamādiśa ||",
  "S04n368:223": "iti saṃprārthitaṃ tena śrutvā sa bhagavāṃchikhī |",
  "S04n368:224": "ratnapāṇistamālokya samāmaṃtryaivamādiśat ||",
  "S04n368:225": "kulaputra śṛṇu cāsya lokeśasya jagatprabhoḥ |",
  "S04n368:226": "puṇyaskandhaṃ pravakṣyāmi sattvānāṃ bhadrakāraṇe ||",
  "S04n368:227": "tadyathaike mahāsattvāḥ sarveṣāmapi dehinām |",
  "S04n368:228": "sarvadā sarvasatkārairbhajanti samupasthitāḥ ||",
  "S04n368:229": "teṣāṃ puṇyāni yāvanti tāni sarvāṇi sadguroḥ |",
  "S04n368:230": "lokeśsyaikavālāgre iti sarve jinā jaguḥ ||",
  "S04n368:231": "tadyathāpi caturdvīpe meghā varṣanti sarvadā |",
  "S04n368:232": "tatsarvajalabindūnāṃ saṃkhyātuṃ śakyate mayā ||",
  "S04n368:233": "na tu lokeśvarasyāsya bodhisattvasya satprabhoḥ |",
  "S04n368:234": "puṇyaskandhapramāṇāni kartuṃ kenāpi śakyate ||",
  "S04n368:235": "sarvaṣāmapi cābdhīṇāṃ sarveṣāmapi cāmbhasām |",
  "S04n368:236": "ekaikabindhusaṃkhyāni kartuṃ śaknomyahaṃ dhruvam ||",
  "S04n368:237": "na tu lokeśvarasyāsya saṃbodhivratacāriṇaḥ |",
  "S04n368:238": "puṇyasaṃbhārasaṃkhyāni kartuṃ śaknomyahaṃ khalu || 55",
  "S04n368:240": "sarveṣāmapi jantūnāṃ caturdvīpanivāsinām |",
  "S04n368:241": "ekaikaromasaṃkhyābhiḥ pramāṇaṃ śakyate kila ||",
  "S04n368:242": "na tu lokeśvarasyāsya saddharmasadguṇāmbudheḥ |",
  "S04n368:243": "bodhisaṃbhārapuṇyānāṃ pramātuṃ śakyate mayā ||",
  "S04n368:244": "hemaratnamayān stūpān paramāṇurajopamān |",
  "S04n368:245": "vidhāya sarvadābhyarcya prabhajet samupasthitaḥ ||",
  "S04n368:246": "saṃbuddhapratimāṃścaivaṃ paramāṇurajopamān |",
  "S04n368:247": "hemaratnamayān sthāpya sarve lokā mahotsavaiḥ ||",
  "S04n368:248": "sadhāturatnapūjāṃgairbhajeyuḥ sarvadā mudā |",
  "S04n368:249": "etatpuṇyapramāṇāni kartuṃ śaknomyahaṃ dhruvam ||",
  "S04n368:250": "naiva lokeśvarasyāsya caturbrahmavihāriṇaḥ |",
  "S04n368:251": "puṇyasaṃkhyāpramāṇāni kartuṃ śaknomi sarvathā ||",
  "S04n368:252": "sarveṣāmapi vṛkṣāṇāṃ caturdvipamahīruhām |",
  "S04n368:253": "patrasaṃkhyāpramāṇāni kartuṃ śaknomyahaṃ khalu ||",
  "S04n368:254": "naiva lokeśvarasyāsya sattvahitārthadāyinaḥ |",
  "S04n368:255": "puṇyasaṃkhyāpramāṇāni kartuṃ śaknomi sarvadā ||",
  "S04n368:256": "sarve strīpuruṣā maryāścaturdvīpanivāsinaḥ |",
  "S04n368:257": "śrotāpattifale sthāpya cārayeyuḥ susaṃvaram ||",
  "S04n368:258": "teṣāṃ puṇyapramāṇāni kartuṃ śaknomyahaṃ khalu |",
  "S04n368:259": "na tu lokeśapuṇyānāṃ pramātuṃ śaknuyāmaham ||",
  "S04n368:260": "etān sarvānnarāṃścāpi bodhayitvā prayatnataḥ |",
  "S04n368:261": "sakṛdāgāminaḥ kṛtvā cārayeyuḥ śubhe sadā ||",
  "S04n368:262": "eteṣāmapi puṇyānāṃ pramātuṃ śakyate khalu |",
  "S04n368:263": "naiva lokeśapuṇyānāṃ pramātuṃ śakyate kvacit ||",
  "S04n368:264": "tathā ca mānavān sarvān bodhayitvānumodayan |",
  "S04n368:265": "anāgāmīfale sthāpya cārayeyuḥ susaṃbare ||",
  "S04n368:266": "eteṣāmapi puṇyānāṃ pramātuṃ śakyate kila |",
  "S04n368:267": "naiva lokeśvarasyāsya pramātuṃ śakyate kvacit || 56",
  "S04n368:269": "tathaitān sakalān martyān bodhayitvā prayatnataḥ |",
  "S04n368:270": "arhatve saṃpratisthāpya cārayeyuḥ sunirvṛtau ||",
  "S04n368:271": "eteṣāmapi puṇyānāṃ pramātuṃ śakyate mayā |",
  "S04n368:272": "na tu lokaeśvarasyāsya śakyate sugatairapi ||",
  "S04n368:273": "tathā pratyekabodhau ca sarvān etān narānapi |",
  "S04n368:274": "bodhayitvā niyujyeva cārayeyuḥ sunirvṛtau ||",
  "S04n368:275": "eteṣāmapi puṇyānāṃ pramātuṃ śakyate mayā |",
  "S04n368:276": "na tu lokeśvarasyāsya sarvairapi munīśvaraiḥ ||",
  "S04n368:277": "eteṣāmapi sarveṣāṃ puṇyānāṃ pravaraṃ mahat |",
  "S04n368:278": "puṇyaṃ lokeśvarasyāsya bahvameyamuttamam ||",
  "S04n368:279": "kiṃ mayaikena tatpuṇyaṃ pramātuṃ iha śakyate |",
  "S04n368:280": "sarvairapi munīndrairhī śakyate na kadācana ||",
  "S04n368:281": "evamasau mahatpuṇyasaṃbhāraśrīsamṛddhimān |",
  "S04n368:282": "lokaśvaro mahāsattvo bodhisattvo jinātmajaḥ ||",
  "S04n368:283": "nāstīdṛkpuṇyasaṃbhārasadguṇaśrīsamṛddhimān |",
  "S04n368:284": "tadanyo hi mahāsatvaḥ kutastraidhātukeṣvapi ||",
  "S04n368:285": "ityevaṃ tanmahatpuṇyaṃ śrutvā yūyaṃ pramoditāḥ |",
  "S04n368:286": "tamīśaṃ śaraṇaṃ gatvā bhajadhvaṃ sarvadā bhave ||",
  "S04n368:287": "ye tasya trijagadbharturlokeśasya jagatprabhoḥ |",
  "S04n368:288": "dhyātvā nāma samuccārya smṛtvā bhajanti sarvadā ||",
  "S04n368:289": "te bhavakleśanirmuktāḥ pariśuddhatrimaṇḍalāḥ |",
  "S04n368:290": "dharmaśrīguṇasaṃpannāḥ saṃprayāyuḥ sukhāvatīm ||",
  "S04n368:291": "tatrāmitābhanāthasya gatvā te śaraṇaṃ mudā |",
  "S04n368:292": "saddharmāmṛtamāsvādya rameyurbodhisādhinaḥ ||",
  "S04n368:293": "bhūyaste bhagasaṃkleśairbādhiṣyante kadācana |",
  "S04n368:294": "garbhavāsamahadadukhaṃ labheyurna punarbhave ||",
  "S04n368:295": "tasyāmeva sukhāvatyāṃ padme ratnameye vare |",
  "S04n368:296": "saṃjātā satataṃ dhyātvā tiṣṭheyustaṃ muniśvaram || 57",
  "S04n368:298": "tāvattatra sukhāvatyāṃ tiṣṭheyuste sukhānvitāḥ |",
  "S04n368:299": "yāvannāsya jagacchāstuḥ pratijñā paripūritā ||",
  "S04n368:300": "krameṇa bodhisaṃbhāraṃ pūrayitvā jagaddhite |",
  "S04n368:301": "trividhāṃ bodhimāsādya sambuddhapadamāpnuyuḥ ||",
  "S04n368:302": "ityevaṃ sugataiḥ sarveḥ samādiṣṭaṃ mayā śrutam |",
  "S04n368:303": "tadasya lokanāthasya bhajantu bodhivāṃchinaḥ ||",
  "S04n368:304": "ityādiṣṭaṃ munīndreṇa ratnapāṇīrniśamya saḥ |",
  "S04n368:305": "śikhinaṃ bhagavantaṃ taṃ samālokyaivamabravīt ||",
  "S04n368:306": "bhagavannasya pratijñā yā sudṛḍhātimahatyasau |",
  "S04n368:307": "kiyatā khalu kālena saṃpūritā bhaviṣyate ||",
  "S04n368:308": "kathamekātmanā tena sarve traidhātukāśritāḥ |",
  "S04n368:309": "bodhimārge pratiṣṭhāpya saṃpreṣitāḥ sukhāvatīm ||",
  "S04n368:310": "kathamasau mahāsattvaḥ sattvānnādhimuktikān |",
  "S04n368:311": "ekaḥ prabodhayan sarvān bodhimārge'bhiyojayet ||",
  "S04n368:312": "sattvāḥ ṣaḍgatisaṃjātā nānākarmānucāriṇaḥ |",
  "S04n368:313": "etān sarvān kathameko bodhayan paripācayet ||",
  "S04n368:314": "iti tenoditaṃ śrutvā bhagavān sa śikhī jinaḥ |",
  "S04n368:315": "ratnapāṇiṃ mahāsattvaṃ tamālokyaivamabravīt ||",
  "S04n368:316": "eko'pyasau mahāsattvo mahābhijño jināṃśajaḥ |",
  "S04n368:317": "nānārupeṇa sattvānāṃ saddharma samupādiśat ||",
  "S04n368:318": "bodhayan prāṇinaḥ sarvān dattvā dravyaṃ yathepsitam |",
  "S04n368:319": "bodhimārge pratiṣṭhāpya preṣayati jinālayam ||",
  "S04n368:320": "boddhān subuddharupeṇa buddhadharme niyojayan |",
  "S04n368:321": "bodhimārge pratiṣṭhāpya preṣayati sukhāvatīm ||",
  "S04n368:322": "pratyekabuddharupeṇa pratyekabodhivāṃchinaḥ |",
  "S04n368:323": "bodhimārge pratiṣṭhāpya preṣayati sunirvṛtim ||",
  "S04n368:324": "arhaddharmānusaṃraktānarhadrūpeṇa bodhayan |",
  "S04n368:325": "arhaddharme pratiṣṭhāpya preṣayati sukhāvatīm || 58",
  "S04n368:327": "bodhicaryeṣiṇo bodhisattvarupeṇa bodhayan |",
  "S04n368:328": "bodhicaryāvrate sthāpya cārayati jagatddhite ||",
  "S04n368:329": "tathopāsakarupeṇa prabodhayanūpāsakan ||",
  "S04n368:330": "bodhimārge pratiṣṭhāpya cārayati susaṃvaram ||",
  "S04n368:331": "tathā ca śivarupeṇa śaivān sarvān prabodhayan |",
  "S04n368:332": "bodhimārge niyujyāsau cārayati jagaddhite ||",
  "S04n368:333": "evaṃ sa vaiṣṇavān sarvān viṣṇurupeṇa bodhyan |",
  "S04n368:334": "bodhimārge niyujyāpi cārayati jagaddhite ||",
  "S04n368:335": "tathā ca brāhmaṇān sarvān brahmarupeṇa bodhayan |",
  "S04n368:336": "bodhimārge pratiṣṭhāpya cārayanti jagaddhite ||",
  "S04n368:337": "tathaindrānindrarupeṇa sarvānapi prabodhayan |",
  "S04n368:338": "bodhimārge pratiṣṭhāpya cārayati jagaddhite ||",
  "S04n368:339": "tathā sūryasya vaineyān sūryerupeṇa bodhayan |",
  "S04n368:340": "bodhimārge pratiṣṭhāpya cārayati jagaddhite ||",
  "S04n368:341": "tathā ca candravaineyāṃścandrarupreṇa bodhayan |",
  "S04n368:342": "bodhimārge pratiṣṭhāpya cārayati jagaddhite ||",
  "S04n368:343": "tathā ca vahnivaineyān vahnirupeṇa bodhayan |",
  "S04n368:344": "bodhimārge pratiṣṭhāpya cārayati jagaddhite ||",
  "S04n368:345": "tathā ca yamavaineyān yamarupeṇa bodhayan |",
  "S04n368:346": "evaṃ varuṇarupeṇa vaineyān varuṇasya ca ||",
  "S04n368:347": "tathā ca vāyuvaineyān vāyurupeṇa bodhayan |",
  "S04n368:348": "vaineyān rākṣasasyāpi rakṣorupeṇa bodhayan ||",
  "S04n368:349": "yakṣarupeṇa yakṣasya vaineyān saṃprabodhayan |",
  "S04n368:350": "nāgarupeṇa nāgasya vaineyān saṃprabodhayan ||",
  "S04n368:351": "tathā bhūteśarupeṇa vaineyān bhūtaparerapi |",
  "S04n368:352": "tathā gaṇeśarupeṇa vaineyān gaṇapasya ca ||",
  "S04n368:353": "tathā gandharvarupeṇa gāndharvadharmacāriṇaḥ |",
  "S04n368:354": "tathā kinnararupeṇa vaineyān kinnarasya ca || 59",
  "S04n368:356": "vidyādharasya rupeṇa vaidyādharān prabodhayan |",
  "S04n368:357": "tathā bhairavavaineyān rupeṇa bhairavasya ca ||",
  "S04n368:358": "tathā kumāravaineyān skandarupeṇa bodhayan ||",
  "S04n368:359": "mahākālasya rupeṇa vaineyāṃstasya bodhayan |",
  "S04n368:360": "mahākālasya rupeṇa vaineyāṃstasya bodhayan ||",
  "S04n368:361": "mātṛkāṇāṃ ca rupeṇa vaineyān saṃprabodhayan |",
  "S04n368:362": "bodhimārge pratiṣṭhāpya cārayati jagaddhite ||",
  "S04n368:363": "evaṃ yasya yasya vaineyān sattvān yantena bodhayan |",
  "S04n368:364": "tasya tasyaiva rupeṇa yogayati jagaddhite ||",
  "S04n368:365": "evaṃ sa ṛṣivaineyānṛṣirupeṇa bodhayan |",
  "S04n368:366": "yogirupeṇa vaineyān yoginaścāpi bodhayan ||",
  "S04n368:367": "tathā ca yativaineyān yatirupeṇa bodhayan |",
  "S04n368:368": "tathā tapasvavaineyāṃstapasvirupeṇa bodhayan ||",
  "S04n368:369": "tathā tairthikarupeṇa tīrthikāṃścāpi bodhayan |",
  "S04n368:370": "tathā ca rājavaineyān rājarupeṇa bodhayan ||",
  "S04n368:371": "vaiśyarupeṇa vaineyān vaiśyasyāpi prabodhayan |",
  "S04n368:372": "śūdrarupeṇa śūdrasya vaineyāṃśca prabodhayan ||",
  "S04n368:373": "gṛhapateścāpi vaineyāṃstadrūpeṇa prabodhayan |",
  "S04n368:374": "tathā ca maṃtrīvaineyān maṃtrīrupeṇa bodhayan ||",
  "S04n368:375": "tathā cāmātyarupeṇa tadvaineyān prabodhayan |",
  "S04n368:376": "tathā ca yodhṛvaineyān yodhṛrupeṇa kāṃścana ||",
  "S04n368:377": "evaṃ ca bhṛtyarupeṇa dāsarupeṇa kāṃścana |",
  "S04n368:378": "kāṃscicca sārthabhṛdrūpeṇa śinpirupeṇa kāṃścana ||",
  "S04n368:379": "tathā ca vaidyarupeṇa vaṇigrūpeṇa kāṃścana |",
  "S04n368:380": "kāṃścicca pitṛrupeṇa mātṛrupeṇa kāṃścana ||",
  "S04n368:381": "tathā ca bhrātṛrupeṇa bhāryārupeṇa kāṃścana |",
  "S04n368:382": "rupeṇāpi bhaginyāśca putrarupeṇa kāṃścana ||",
  "S04n368:383": "kaścidduhitṛrupeṇa pautrarupeṇa kāṃścana |",
  "S04n368:384": "evaṃ pitāmahādīnāṃ jñātīnāṃ suhṛdāmapi ||| 60",
  "S04n368:386": "baṃdhumitrasahāyānāṃ rupeṇa paribodhayan |",
  "S04n368:387": "kāṃścicca śatrurupeṇa saṃtrāsayan prayatnataḥ ||",
  "S04n368:388": "kāṃściccaṇḍālarupeṇa caurarupeṇa kāṃścana |",
  "S04n368:389": "saddharme prerayitvaiva cararayati jagaddhite ||",
  "S04n368:390": "evaṃ siṃhādijantūnāṃ rupeṇa trāsayannapi |",
  "S04n368:391": "paśūnāṃ pakṣiṇāṃ cāapi kṛmikīṭādiprāṇinām ||",
  "S04n368:392": "rupeṇa trāsayitvāpi bodhayitvā ca yatnataḥ |",
  "S04n368:393": "bodhimārge pratiṣṭhāpya cārayati jagacchubhe ||",
  "S04n368:394": "evamasau mahāsattvo lokanātho jagatprabhuḥ |",
  "S04n368:395": "nānārupeṇa sarveṣāṃ sattvānāṃ bodhayan manaḥ ||",
  "S04n368:396": "trāsayannapi saddharme prerayasi prayatnataḥ ||",
  "S04n368:397": "evaṃ sa trijagannātho bodhisattvo jinātmajaḥ |",
  "S04n368:398": "sarvān sattvān samuddhṛtya preṣayati sukhāvatīm ||",
  "S04n368:399": "evaṃ kṛtvā sa lokeśaḥ sarvalokādhipeśvaraḥ |",
  "S04n368:400": "ṣaḍgatibhavacārīṇāṃ duṣṭānāmapi mūḍhānām ||",
  "S04n368:401": "saddharmasadguṇaśrīmanmāhaiśvaryasamṛddhimān ||",
  "S04n368:402": "nāsti tena samaḥ kaścitpuṇyaśrīguṇavānapi |",
  "S04n368:403": "dayālurbhadrasaṃcārī traidhātubhuvaneṣvapi ||",
  "S04n368:404": "evaṃ tasya mahatpuṇyaṃ matvā saṃbodhivāṃchinaḥ |",
  "S04n368:405": "śraddhayā śaraṇaṃ gatvā smṛtvā dhyātvā bhajaṃti te ||",
  "S04n368:406": "ye tasya śaraṇaṃ gatvā smṛtvā dhyātvā bhajaṃti te |",
  "S04n368:407": "sarve hi vimalātmāno bhadrāśayāḥ śubheṃdriyāḥ ||",
  "S04n368:408": "bodhisatvā mahāsatvāḥ pracaraṃtaḥ sadā śubhe |",
  "S04n368:409": "trividhāṃ bodhimāsādhya nirvṛtiṃ padamāpnuyuḥ ||",
  "S04n368:410": "ityādiṣṭaṃ munīṃdreṇa ratnapāṇirniśamya saḥ |",
  "S04n368:411": "atyadbhutasamakrāntahadayaścaivamabravīt ||",
  "S04n368:412": "paramādbhutaprāpto'haṃ bhagavan yadīdṛśaṃ kvacit |",
  "S04n368:413": "dharmaśrīguṇamāhātmyaṃ dṛṣṭaṃ na śrūyate'pi na || 61",
  "S04n368:415": "īdṛśaṃ puṇyasaṃbhāraṃ jinānāmapi na kvacit |",
  "S04n368:416": "dṛśyate śrūyate nāpi kadācana mayā khalu ||",
  "S04n368:417": "evaṃ tenoditaṃ śrutvā bhagavān sa śikhī jinaḥ |",
  "S04n368:418": "ratnapāṇiṃ mahāsattvaṃ tamālokyaivamādiśat ||",
  "S04n368:419": "sarvākārasubhadrāṃśo viśvarupo maṇiryathā |",
  "S04n368:420": "cintāmaṇirmahāratna iva sarvahitārthabhṛt ||",
  "S04n368:421": "kāmadhenuryathākāmaṃ bhogyaṃ saṃpattisaṃbharaḥ |",
  "S04n368:422": "kalpavṛkṣo yathā bhadraśrīsamṛddhipradāyakaḥ ||",
  "S04n368:423": "bhagraghaṭo yathā sarvasattvavāṃchitapūrakaḥ |",
  "S04n368:424": "lokeśvaraḥ sa sarveṣāṃ vāṃchitārthābhipūrakaḥ ||",
  "S04n368:425": "bodhisattvo jagadbhartā viśvanātho jagatprabhuḥ |",
  "S04n368:426": "sarvadharmādhipaśśāstā sarvalokādhipeśśvaraḥ ||",
  "S04n368:427": "kiṃ vakṣyate'sya māhātmyaṃ bodhiśrīguṇasaṃbhṛtaḥ |",
  "S04n368:428": "śakyate na samākhyātuṃ sarvairapi munīśvaraiḥ ||",
  "S04n368:429": "tadyathāsau mahāsattvo durdāntānapi bodhayan |",
  "S04n368:430": "bodhimārge pratiṣṭhāpya cārayati jagaddhite ||",
  "S04n368:431": "vajrakukṣiguhā khyātā jambūdvipe'tra vidyate |",
  "S04n368:432": "tatrānekasahastrāni vasanti sma suradviṣām ||",
  "S04n368:433": "tatra gatvā surāṇāṃ sa śāstṛrupeṇa saṃsaran |",
  "S04n368:434": "saddharmaṃ samupādeṣṭuṃ paśyaṃstān samupācarat ||",
  "S04n368:435": "taṃ dṛṣṭvā samupāyātamācāryaṃ te'surā mudā |",
  "S04n368:436": "sarve te sahasopetya praṇatvaivaṃ babhāṣire ||",
  "S04n368:437": "svāgataṃ te samayāsi praṇatvaivaṃ babhāṣire ||",
  "S04n368:438": "svāgataṃ te samāyasi kaścit sarvatra kauśalam |",
  "S04n368:439": "kṛpayā naḥ samālokya dharmamādeṣṭumarhasi ||",
  "S04n368:440": "bhavatā yadyathādiṣṭaṃ tattathā vayamādarāt |",
  "S04n368:441": "śrutvā dhṛtvā cariṣyāmaḥ saṃsārasukhasādhane ||",
  "S04n368:442": "iti saṃprārthante sarve dānavāstaṃ guruṃ mudā |",
  "S04n368:443": "sabhāsane pratiṣṭhāpya dharmaṃ śrotumupāśrayan || 62",
  "S04n368:445": "tān sarvān samupāsīnān dṛṣṭvā sa sugatātmajaḥ |",
  "S04n368:446": "daityānāṃ dharmamārabhya saddharmaṃ samupādiśat ||",
  "S04n368:447": "bhavantaḥ śrūyatvā dharmeṃ saṃsārasukhasādhanam |",
  "S04n368:448": "vakṣyate'tra mayā yuṣmatsaṃsāraguḥkhamuktaye ||",
  "S04n368:449": "maitracitā bhavanto'tra śāntacitā jitendriyāḥ |",
  "S04n368:450": "dayācittāśca sattveṣu bhavadhyaṃ samācāriṇaḥ ||",
  "S04n368:451": "tataḥ satyasamācārāḥ pariśuddhāśayā mudā |",
  "S04n368:452": "triratnaśaraṇaṃ gatvā caradhvaṃ poṣadhaṃ vratam ||",
  "S04n368:453": "dhṛtvā tadavratarājākhyaṃ saṃsārabhadrakāriṇaḥ |",
  "S04n368:454": "śṛṇudhvaṃ cāpi kāraṇḍavyūhasūtrasubhāṣite ||",
  "S04n368:455": "ye śrutvedaṃ mahāyānasūtrarājaṃ subhāṣitam |",
  "S04n368:456": "triratnaśaraṇaṃ gatvā caranti poṣadhaṃ vratam ||",
  "S04n368:457": "teṣāṃ sarvāṇi pāpāni paṃcānantaryakānyapi |",
  "S04n368:458": "niḥśeṣaṃ parinaṣṭāni bhaviṣyanti sadā bhave ||",
  "S04n368:459": "ye ca śrutvānudanti śraddadhāsyanti cādarāt |",
  "S04n368:460": "gṛhiṣyanti likhiṣyanti svādhyāsyanti pramoditāḥ ||",
  "S04n368:461": "ye ca likhāpayiṣyanti vācayiṣyanti sarvadā |",
  "S04n368:462": "sadānucintayiṣyanti bhāvayiṣyanti cādarāta ||",
  "S04n368:463": "parebhyo vistareṇārthamupadeṣyanti sādarāt |",
  "S04n368:464": "satkāraiḥ śraddhayā nityaṃ pūjayiṣyanti sarvadā ||",
  "S04n368:465": "te eva sukhitā dhanyāḥ saṃsārasukhabhāginaḥ |",
  "S04n368:466": "na te durgatiduḥkhāni bhojyante'pi kadācana ||",
  "S04n368:467": "sadāsadgatisaṃjātāḥ saṃsārasukhabhoginaḥ |",
  "S04n368:468": "sadguṇaśrīmahatsapadṛddhimanto maharddhikāḥ ||",
  "S04n368:469": "bodhicaryāvrataṃ dhṛtvā svaparātmahitodyatāḥ |",
  "S04n368:470": "kṛtvā sarvatra bhadrāṇi cariṣyanti sadā bhave ||",
  "S04n368:471": "prānte jātismarāste ca bodhipraṇihitāśayāḥ |",
  "S04n368:472": "triratnaśaraṇaṃ gatvā sameṣyanti sunirvṛtim || 63",
  "S04n368:474": "yadā kāle samāyāte teṣāṃ nirvṛtivāṃchinām |",
  "S04n368:475": "dvādaśā sugatāḥ prekṣya samupāgamya sammukham ||",
  "S04n368:476": "upasthitāḥ samālokya spṛṣṭvā puṇyasudhākaraiḥ |",
  "S04n368:477": "saṃpaśyantaḥ samāśvāsya mānayantyevamādarāt ||",
  "S04n368:478": "mā bhaiṣīḥ kulaputrātra tiṣṭhālaṃ vyasudhīratām |",
  "S04n368:479": "yanmahāyānakāraṇyūhasūtraṃ tvayā śrutam ||",
  "S04n368:480": "tatte nāsti bhayaṃ kiṃcidadurgateśca kadācana |",
  "S04n368:481": "gamanāya sukhāvatyāṃ mārgeste pariśodhitaḥ ||",
  "S04n368:482": "yuṣmadarthe sukhāvatyāṃ divyālaṃkārabhūṣaṇam |",
  "S04n368:483": "divyāmṛtasubhogyaṃ ca saṃsthāpitamahattamam ||",
  "S04n368:484": "ityāśvāsya munīndrāstān tyaktadehān sukhāvatim |",
  "S04n368:485": "nītvāmitābhanāthasya sthāpayeyuḥ sabhāsane ||",
  "S04n368:486": "tatrāmitābhanāthasya pītvā dharmāmṛtaṃ mudā |",
  "S04n368:487": "bodhicaryāvrataṃ dhṛtvā pracareyuḥ sadāpi te ||",
  "S04n368:488": "krameṇa bodhisaṃbhāraṃ pūrayitvā jagaddhite |",
  "S04n368:489": "trividhāṃ bodhimāsādya samāpsyanti sunirvṛtim ||",
  "S04n368:490": "iatyevaṃ sugataiḥ sarvaiḥ samākhyātaṃ mayā śrutam |",
  "S04n368:491": "tathā samuditaṃ śrūtvā yūyaṃ sarve'numodata ||",
  "S04n368:492": "yadyevaṃ nirvṛtiṃ gantuṃ sarve yūyaṃ samicchatha |",
  "S04n368:493": "triratnaśaraṇaṃ gatvā carata poṣadhavratam ||",
  "S04n368:494": "mahāyānasūtrarājaṃ kāraṇḍavyūhamuttamam |",
  "S04n368:495": "śrutvā sadā samādhāya carate bodhisaṃvaram ||",
  "S04n368:496": "etatpuṇyānubhāvena sadāa bhuktvā mahāsukham |",
  "S04n368:497": "niḥkleśā vimalātmānaḥ pariśuddhatrimaṇḍalāḥ ||",
  "S04n368:498": "bodhicaryāvrataṃ dhṛtvā saṃcaranto jagaddhite |",
  "S04n368:499": "bodhisattvā mahāsatvāḥ sarvasaṃsārapālakāḥ ||",
  "S04n368:500": "tataḥ prānte sukhāvatyāṃ gatvā bhuktvā mahatsukham |",
  "S04n368:501": "saddharmamitābhasya śrutvā śubhe cariṣyatha || 64",
  "S04n368:503": "tatrāpi bodhisaṃbhāraṃ pūrayitvā yathākramam |",
  "S04n368:504": "trividhāṃ bodhimāsādhya saṃprāpsyatha sunirvṛtim ||",
  "S04n368:505": "etanmayā samākhyātaṃ yadi nirvṛtimicchatha |",
  "S04n368:506": "śrutvā yathā mayoddiṣṭaṃ tathā carata sarvadā ||",
  "S04n368:507": "iti tena samādiṣṭaṃ śrutvā sarve'pi te'surāḥ |",
  "S04n368:508": "tathetyabhyanumoditvā tathā caritumīcchire ||",
  "S04n368:509": "tataste dānavāḥ sarve nirvṛtisukhavāṃchinaḥ |",
  "S04n368:510": "tamācāryaṃ punarnatvā prārthayannevamādarāt ||",
  "S04n368:511": "śāstarbhavatsamādiṣṭaṃ śrutvā vayaṃ prabodhitāḥ |",
  "S04n368:512": "tathā caritumicchāmastatsamādeṣṭumarhati ||",
  "S04n368:513": "iti taiḥ prārthitaṃ śrutvā sa lokeśo'surātmadhṛt |",
  "S04n368:514": "sarvāṃstānasurān paśyan samāmantryaivamādiśat ||",
  "S04n368:515": "bho bhavanto'surāḥ sarve śṛṇuta tanmayoditam |",
  "S04n368:516": "śruvānumodanāṃ kṛtvā carataitad vrataṃ sadā ||",
  "S04n368:517": "ādau sarve mahāyānasūtrarājaṃ varottamam |",
  "S04n368:518": "kāraṇḍavyūhamākarṇya prānumodya prabodhitāḥ ||",
  "S04n368:519": "prātastīrthajale snātvā śuddhaśīlā jinendriyāḥ |",
  "S04n368:520": "triratnaśaraṇaṃ gatvā dhyānatvā lokeśvaraṃ prabhum ||",
  "S04n368:521": "yathāvidhi samabhyarcya japastotrābhivandanaiḥ |",
  "S04n368:522": "saṃtosya prārthanāṃ kuryuḥ saṃbodhivratasādhanām ||",
  "S04n368:523": "evaṃ vrataṃ samāpyaiva paṃcāmṛtairnirāmiṣaiḥ |",
  "S04n368:524": "bhojanaistṛtīye yāme kuryustatpālanaṃ mudā ||",
  "S04n368:525": "evaṃ nitvaṃ yathāśakti māse māse'pi sarvadā |",
  "S04n368:526": "aṣṭamyāṃ paṃcadaśyāṃ ca vrataṃ kuryuryathāvidhi ||",
  "S04n368:527": "carataitadavrataṃ nityaṃ māse māse'pi sarvadā |",
  "S04n368:528": "athaikavāramapyevaṃ varṣe caratkārtike ||",
  "S04n368:529": "kārtike yaykṛtaṃ karma tatfalaṃ bahusattamam |",
  "S04n368:530": "aprmeyamasaṃkhyeyaṃ na kṣaṇuyāta kadācana || 65",
  "S04n368:532": "iti matvā samādhāya carataitadvrataṃ sadā |",
  "S04n368:533": "evaṃ sa samupādiśya tadvidhiṃ samupādiśat ||",
  "S04n368:534": "tadācāryasamādiṣṭaṃ dhṛtvā sarve'pi te'surāḥ |",
  "S04n368:535": "yathāvidhi samādhāya precirustadavrataṃ sadā ||",
  "S04n368:536": "tataste dānavāḥ sarve caturbrahmavihāriṇaḥ |",
  "S04n368:537": "bodhisattvā mahāsattvā babhūvurbhadracāriṇaḥ ||",
  "S04n368:538": "evamasau mahābhijño durdāntānapi dānavān |",
  "S04n368:539": "bodhayitvā prayatnena bodhimārge prayojayet ||",
  "S04n368:540": "evaṃ tasya jagacchāstuḥ puṇyaskandhaṃ mahadbahu |",
  "S04n368:541": "aprameyamasaṃkhyeyaṃ ityākhyātaṃ munīśvaraiḥ ||",
  "S04n368:542": "evaṃ sa trijagannātho lokeśvaro jinātmajaḥ |",
  "S04n368:543": "svayaṃ paśyan jagatsarvaṃ pālayati sadā bhave ||",
  "S04n368:544": "pāpiṣṭānapi durdāntānapi yatnaiḥ prabodhayan |",
  "S04n368:545": "bodhimārge niyujyaivaṃ preṣayati sunirvṛtim ||",
  "S04n368:546": "tenāsau trijagacchāstā sarvalokādhipeśvaraḥ |",
  "S04n368:547": "bhajanīyaḥ sadā bhaktyā saṃbodhijñānavāṃchibhiḥ ||",
  "S04n368:548": "tasya nāma samuccārya smṛtvā dhyātvā bhajanti ye |",
  "S04n368:549": "te nūnaṃ bodhimāsādhya nirvṛtiṃ samavāpnuyuḥ ||",
  "S04n368:550": "ityādiṣṭaṃ munīndreṇa ratnapāṇirniśamya saḥ |",
  "S04n368:551": "prabodhitaḥ prasannātmā prābhyanandat sa pārṣadaḥ ||",
  "S04n368:552": "ityevaṃ śikhinādiṣṭaṃ saṃbuddhena mayā śrutam |",
  "S04n368:553": "lokeśvarasya māhātmyaṃ puṇyaskandhaṃ mahattaram ||",
  "S04n368:554": "iti tasya jagadbhartuḥ puṇyaskandhaṃ mahattaram |",
  "S04n368:555": "smṛtvā nāma samuccārya dhyātvāpi bhajatāṃ sadā ||",
  "S04n368:556": "tasya nāma samucccārya smṛtvā dhyātvā bhajanti ye |",
  "S04n368:557": "te sarve vimalātmānaḥ saṃyāsyanti sukhāvatīm ||",
  "S04n368:558": "tatrāmitābhanāthasya pītvā dharmāmṛtaṃ sadā |",
  "S04n368:559": "bodhicaryāvrataṃ dhṛtvā saṃcaranto jagaddhite ||",
  "S04n368:560": "bodhisattvā mahābhijñāḥ pariśuddhatrimaṇḍalāḥ |",
  "S04n368:561": "trividhāṃ bodhimāsādhya nirvṛtipadamāpnuyuḥ ||",
  "S04n368:562": "ityādiṣṭaṃ munīndreṇa śrīghanena sa pārṣadaḥ |",
  "S04n368:563": "śrutvā sarvanīvaraṇaviṣkambhī prābhyanandata ||",
  "S04n368:564": " ||iti śrīsarvākārasarvaprabodhanasaddharmasaṃcāraṇaṃ prakaraṇam ||"
}