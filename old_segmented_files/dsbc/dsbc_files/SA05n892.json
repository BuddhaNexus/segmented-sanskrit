{
  "SA05n892:0": "gururatnatrayastotram",
  "SA05n892:1": "om namoratnatrayāya",
  "SA05n892:2": "tṛṣṇājihvamasadvikalpaśirasaṃ pradveṣacañcatphalaṃ",
  "SA05n892:3": "kāmakrodhavitarkadarśanamatho rāgapracaṇḍekṣaṇam |",
  "SA05n892:4": "mohāsyaṃ svaśarīrakoṭiśatacintātigaṃ dāruṇaṃ",
  "SA05n892:5": "prajñāmantrabalena yaḥ śamitavān buddhāya tasmai namaḥ || 1 ||",
  "SA05n892:6": "buddhaṃ prabuddhaṃ varadharmarājaṃ śāntaṃ viśuddhaṃ samakīrtidaṃ taṃ |",
  "SA05n892:7": "guṇākaraṃ sattvamunīndrarājaṃ śrīmanmahābodhimahaṃ namāmi || 2 ||",
  "SA05n892:8": "iti buddharatnastotram |",
  "SA05n892:9": "yo jātyādikaduḥkhataptamahasāṃ cakṣuḥ satāṃ prāṇināṃ",
  "SA05n892:10": "yastraidhātukapañjarādaharahaḥ sattvān samākarṣati |",
  "SA05n892:11": "atrāṇaṃ ca jagatsamuddharati yaḥ saṃkleśaduḥkhārṇavāt",
  "SA05n892:12": "saṃbuddhāṃśca punaścyutācca mahate dharmāya tasmai namaḥ || 3 ||",
  "SA05n892:13": "yā sarvajñatayā nayatyupaśamaṃ śāntaiṣiṇaḥ śrāvakān",
  "SA05n892:14": "yā mārgajñatayā jagaddhitakṛtā lokārthasampādikā |",
  "SA05n892:15": "sarvākāramidaṃ vadanti munayo viśvasya yā saṃgatā",
  "SA05n892:16": "tasyai śrāvakabodhisattvagaṇino buddhasya mātre namaḥ || 4 ||",
  "SA05n892:17": "itidharmaratnastotram |",
  "SA05n892:18": "catvāraḥ pratyutpannagā bhavasukhe susvādavidveṣiṇa-",
  "SA05n892:19": "ścatvāraśca phale sthitāḥ śamaratāḥ śāntā mahāyoginaḥ |",
  "SA05n892:20": "ityaṣṭau varapuṃgalā bhagavatā yasmin gaṇe vyākṛtāḥ",
  "SA05n892:21": "prajñāśīlasamādhitaptavapuṣā saṃghāya tasmai namaḥ || 5 ||",
  "SA05n892:22": "buddhaṃ namāmi satataṃ varapadmapāṇiṃ",
  "SA05n892:23": "maitryātmakaṃ gaganagaṃjasamantabhadram |",
  "SA05n892:24": "yakṣādhipaṃ parihitoddhṛtamañjughoṣaṃ",
  "SA05n892:25": "viṣkambhiṇaṃ kṣitigarbhaṃ praṇamāmi bhaktyā || 6 ||",
  "SA05n892:26": "iti saṃgharatnastotram |",
  "SA05n892:27": "gururbuddho gururdharmo guruḥ saṃghastathaiva ca |",
  "SA05n892:28": "gururvajradharaḥ śrīmān tasmai śrīgurave namaḥ || 7 ||",
  "SA05n892:29": "śrī gururatnatrayastotraṃ samāptam |"
}