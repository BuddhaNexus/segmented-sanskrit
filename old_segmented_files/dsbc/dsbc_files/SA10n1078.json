{
  "SA10n1078:0": "śaraṇagamanadeśanā",
  "SA10n1078:1": "namo ratnatrayāya",
  "SA10n1078:2": "tryapāyapañcayonīnāṃ sarvaduḥkhavighātakam |",
  "SA10n1078:3": "śreyo'bhyudayasaukhyānāṃ dātāraṃ praṇamāmi tam ||1 ||",
  "SA10n1078:4": "atra śaraṇagamanamabhidhāsye | samāsataḥ |",
  "SA10n1078:5": "adhiṣṭhānasthitī cintā kālaprakṛtimānakam |",
  "SA10n1078:6": "nayaḥ śikṣā niruktiśca karmaupamyavibhaktayaḥ |",
  "SA10n1078:7": "ādīnavārthaśaṃsāśca proktāḥ pañcadaśa kramāt ||2 ||",
  "SA10n1078:8": "tatra adhiṣṭhānapudgalastu dvividhaḥ- mahāyānagotrīyo hīnayānagotrīyaśca |",
  "SA10n1078:9": "sthitirdvividhā- mahā-hīna-yānabhedataḥ |",
  "SA10n1078:10": "tatraivaṃ hi tāvad mahāyānaśāstreṣu ratnatrayam- tathatāratnatrayam,",
  "SA10n1078:11": "abhisamayaratnatrayaṃ,",
  "SA10n1078:12": "sammukhasthaṃ ca ratnatrayam |",
  "SA10n1078:13": "taccaivam- jñeyāviparyastajñānam,",
  "SA10n1078:14": "nirvikalpādvayajñānam,",
  "SA10n1078:15": "dharmadhātvavasthitatvaṃ ca |",
  "SA10n1078:16": "tadeva viśuddha-dharmadhātuprajñāpāramitā,",
  "SA10n1078:17": "samāhitāvasthāyāṃ gaganatalavat samastadharmasākṣātkāriṇyāṃ mahābhūmau avasthitāḥ bodhisattvāśca ( tathatāratnatrayam) |",
  "SA10n1078:18": "atha caivaṃ- dvividho rupakāyaḥ ,",
  "SA10n1078:19": "santānāvasthitāścatuḥsatya-saptatriṃśadbodhipākṣikadharma-bhūmi-pāramitādayo dharmāḥ,",
  "SA10n1078:20": "prayogamārgīyāśca bodhisattvāḥ |",
  "SA10n1078:21": "punaścaivam- citrāṅkitatotkīrṇaniṣiktamṛṇmayādi (buddhapratimādi)",
  "SA10n1078:22": "- navāṅgapravacanamayapothīpustakādi,",
  "SA10n1078:23": "saṃbhāramārgīyāśca bodhisatvāḥ |",
  "SA10n1078:24": "hīnayānaśāstraṃ tāvat-",
  "SA10n1078:25": "buddhasaṃghakarāndharmān aśaikṣānubhayāṃśca saḥ |",
  "SA10n1078:26": "nirvāṇaṃ ceti śaraṇaṃ yo yāti śaraṇatrayam ||3 || iti |",
  "SA10n1078:27": "tatra āśayo mahāyānināntu aśeṣasattvārthacintanam |",
  "SA10n1078:28": "itarasya ca ātmārthameva cintanam |",
  "SA10n1078:29": "tatra avadhirmahāyānināntu bodhimaṇḍaparyantam |",
  "SA10n1078:30": "itarasya tu yāvajjīvanaṃ pratijñā |",
  "SA10n1078:31": "tatra svabhāvo hrī-apatrapāyuktatā avijñaptpādaśca |",
  "SA10n1078:32": "tatra mānaṃ tu svīkaraṇam,",
  "SA10n1078:33": "śaraṇakaraṇaṃ vijñaptyutpādaśca |",
  "SA10n1078:34": "tatra nayastu śaraṇagamanavidhiḥ |",
  "SA10n1078:35": "sa ca guroravagantavyaḥ |",
  "SA10n1078:36": "tatra śikṣā sādhāraṇī asādhāraṇī ca gurupādebhyo jñeyā |",
  "SA10n1078:37": "tatra niruktistu dāsabhāvaḥ taditarasvāminamananviṣya śaraṇagamanam |",
  "SA10n1078:38": "tatra kāritraṃ tu bodhicittamahāvṛkṣotpādasya mūlatvam,",
  "SA10n1078:39": "mokṣamahānagarasya praveśadvāratvam,",
  "SA10n1078:40": "upavāsādisarvasaṃvarāṇām āśrayatvam |",
  "SA10n1078:41": "tatraupamyaṃ tāvad rājñaḥ mantriṇo vā prajāgaṇasya tadvacanānatikramaṇam,",
  "SA10n1078:42": "tadārādhanamiva ca |",
  "SA10n1078:43": "tatra bhedastu sādhāraṇāsādhāraṇatvena viśiṣṭaḥ |",
  "SA10n1078:44": "tatra ādīnavau dvau |",
  "SA10n1078:45": "śaraṇacyutirajñānaṃ vā |",
  "SA10n1078:46": "cyavanaṃ cyutirvā yathā candrakīrtipādānām-",
  "SA10n1078:47": "gṛhītvā sadadhiṣṭhānaṃ punarhīnasamāśraye |",
  "SA10n1078:48": "cyutipakṣāśrayatvāt so yāti sajjanahāsyatām || 4 ||",
  "SA10n1078:50": "ityuktirnidarśanamātram |",
  "SA10n1078:51": "tatrārthastu yathoktaṃ bhagavatā-",
  "SA10n1078:52": "“bahavaḥ śaraṇaṃ yānti parvatāṃśca vanāni ca |",
  "SA10n1078:53": "ārāmānvṛkṣāṃścaityāṃśca manuṣyā bhayavarjitāḥ ||5 ||",
  "SA10n1078:54": "na tvetaccharaṇaṃ śreṣṭhaṃ naitaccharaṇamuttamam |",
  "SA10n1078:55": "naitaccharaṇamāgamya sarvaduḥkhātpramucyate ||6 ||",
  "SA10n1078:56": "yastu buddhaṃ ca dharma ca saṃghaṃ ca śaraṇaṃ gataḥ |",
  "SA10n1078:57": "catvāri cāryasatyāni paśyati prajñayā yadā ||7 ||",
  "SA10n1078:58": "duḥkhaṃ duḥkhasamutpādaṃ duḥkhasya samatikramam |",
  "SA10n1078:59": "ārya cāṣṭāṅgikaṃ mārga kṣemaṃ nirvāṇagāminam ||8 ||",
  "SA10n1078:60": "etaddhi śaraṇaṃ śreṣṭhaṃ etaccharaṇamuttamam |",
  "SA10n1078:61": "etaccharaṇamāgamya sarvaduḥkhāt pramucyate ||9 || iti |",
  "SA10n1078:62": "śaraṇagamamārthaḥ tādṛśaḥ |",
  "SA10n1078:63": "tatrānuśaṃsāstimnaḥ |",
  "SA10n1078:64": "hetukālānuśaṃsā mārgakālānuśaṃsā phalakālānuśaṃsā ca |",
  "SA10n1078:65": "hetukālā ehikī āmuṣmikī ca |",
  "SA10n1078:66": "ehikānuśaṃsā aṣṭamahābhayamokṣaḥ,",
  "SA10n1078:67": "anantarāyaḥ,",
  "SA10n1078:68": "śāsanapriyadevasāhāyyam,",
  "SA10n1078:69": "maraṇakāle ca cittaharṣādi |",
  "SA10n1078:70": "āmuṣmikī tu saṃsāradurgati-duḥkhebhya uddharaṇam,",
  "SA10n1078:71": "nirvāṇābhyudayasukhapradattvañca |",
  "SA10n1078:72": "mārgānuśaṃsā tu catu-(rārya-)",
  "SA10n1078:73": "satyāryāṣṭāṅgikamārga-saptabodhyaṅgādiyojanam |",
  "SA10n1078:74": "phalānusaṃsā dvividhanirvāṇasya trikāyasya ca prāptiḥ |",
  "SA10n1078:75": "idaṃ hi saṃkṣiptam,",
  "SA10n1078:76": "vistaraṃ tu guruśāstrabhyo jñeyam |",
  "SA10n1078:77": "śaraṇagamanadeśanā-nāma gurubodhisattva-dīpaṅkara-śrījñānaviracitā samāptā ||"
}