{
  "SA07n915:0": "buddhacarita",
  "SA07n915:1": "CANTO 1",
  "SA07n915:2": "aikṣvāka ikṣvākusamaprabhāvaḥ",
  "SA07n915:3": "śākyeṣvaśakyeṣu viśuddhavṛttaḥ |",
  "SA07n915:4": "priyaḥ śaraccandra iva prajānāṃ",
  "SA07n915:5": "śuddhodano nāma babhūva rājā ||1 ||",
  "SA07n915:6": "tasyendrakalpasya babhūva patnī",
  "SA07n915:7": "dīptyā narendrasya samaprabhāvā |",
  "SA07n915:8": "padmeva lakṣmīḥ pṛthivīva dhīrā",
  "SA07n915:9": "māyeti nāmnānupameva māyā ||2 ||",
  "SA07n915:10": "sārdha tayāsau vijahāra rājā",
  "SA07n915:11": "nācintayadvaiśravaṇasya lakṣmīm |",
  "SA07n915:12": "tataśca vidheva samādhiyuktā",
  "SA07n915:13": "garbha dadhe pāpavivarjitā sā ||3 ||",
  "SA07n915:14": "prāggarbhadhānnānmanujendrapatnī",
  "SA07n915:15": "sitaṃ dadarśa dviparājamekam |",
  "SA07n915:16": "svapne viśantaṃ vapurātmanaḥ sā",
  "SA07n915:17": "na tannimittaṃ samavāpa tāpam ||4 ||",
  "SA07n915:18": "sā tasya devapratimasya devī",
  "SA07n915:19": "garbheṇa vaṃśaśriyamudvahantī |",
  "SA07n915:20": "śramaṃ na lebhe na śucaṃ na māyāṃ",
  "SA07n915:21": "gantuṃ vanaṃ sā nibhṛtaṃ cakāṅkṣa ||5 ||",
  "SA07n915:22": "sā lumbinī nāma vanāntabhūmiṃ",
  "SA07n915:23": "citradrūmāṃ caitrarathābhirāmām |",
  "SA07n915:24": "dhyānānukūlāṃ vijanāmiyeṣa",
  "SA07n915:25": "tasyāṃ nivāsāya nṛpaṃ babhāṣe ||6 ||",
  "SA07n915:26": "āryāśayāṃ tāṃ pravaṇāṃ ca dharme",
  "SA07n915:27": "vijñāya kautūhalaharṣapūrṇaḥ |",
  "SA07n915:28": "śivāt purād bhūmipatirjagāma",
  "SA07n915:29": "tatprītaye nāpi vihārahetoḥ ||7 ||",
  "SA07n915:30": "tasminvane śrīmati rājapatnī",
  "SA07n915:31": "prasūtikālaṃ samavekṣamāṇā |",
  "SA07n915:32": "śayyāṃ vitānopahitāṃ prapede",
  "SA07n915:33": "nārīsahasrairabhinandyamānā ||8 ||",
  "SA07n915:34": "tataḥ prasannaśca babhūva puṣya-",
  "SA07n915:35": "stasyāśca devyā vratasaṃskṛtāyāḥ |",
  "SA07n915:36": "pārśvātsuto lokahitāya jajñe",
  "SA07n915:37": "nirvedanaṃ caiva nirāmayaṃ ca ||9 ||",
  "SA07n915:38": "ūroryathaurvasya pṛthośca hastā-",
  "SA07n915:39": "nmāndhāturindrapratimasya mūrdhnaḥ |",
  "SA07n915:40": "kakṣīvataścaiva bhujāṃsadeśā-",
  "SA07n915:41": "ttathāvidhaṃ tasya babhūva janma ||10 ||",
  "SA07n915:42": "krameṇa garbhādabhiniḥsṛtaḥ san",
  "SA07n915:43": "babhau cyutaḥ khādiva yonyajātaḥ |",
  "SA07n915:44": "kalpeṣvanekeṣu ca bhāvitātmā",
  "SA07n915:45": "yaḥ saṃprajānansuṣuve na mūḍhaḥ ||11 ||",
  "SA07n915:46": "dīptyā ca dhairyeṇa ca yo rarāja",
  "SA07n915:47": "bālo ravibhūmimivāvatīrṇaḥ |",
  "SA07n915:48": "tathātidīpto'pi nirīkṣyamāṇo",
  "SA07n915:49": "jahāra cakṣūṃṣi yathā śaśāṅkaḥ ||12 ||",
  "SA07n915:50": "sa hi svagātraprabhayojjvalantyā",
  "SA07n915:51": "dīpaprabhāṃ bhāskaravanmumoṣa |",
  "SA07n915:52": "mahārhajāmbūnadacāruvarṇo",
  "SA07n915:53": "vidyotayāmāsa diśaśca sarvāḥ ||13 ||",
  "SA07n915:54": "anākulānyubjasamudgatāni",
  "SA07n915:55": "niṣpeṣavadvyāyatavikramāṇi |",
  "SA07n915:56": "tathaiva dhīrāṇi padāni sapta",
  "SA07n915:57": "saptarṣitārāsadṛśo jagāma ||14 ||",
  "SA07n915:58": "bodhāya jāto'smi jagaddhitārtha-",
  "SA07n915:59": "mantyā bhavotpattiriyaṃ mameti |",
  "SA07n915:60": "caturdiśaṃ siṃhagatirvilokya",
  "SA07n915:61": "vāṇī ca bhavyārthakarīmuvāca ||15 ||",
  "SA07n915:62": "khātprasrūte candramarīciśubhre",
  "SA07n915:63": "dve vāridhāre śiśiroṣṇavīrye |",
  "SA07n915:64": "śarīrasaṃsparśasukhāntarāya",
  "SA07n915:65": "nipetaturmūrdhani tasya saumye ||16 ||",
  "SA07n915:66": "śrīmadvitāne kanakojjvalāṅge",
  "SA07n915:67": "vaiḍūryapāde śayane śayānam |",
  "SA07n915:68": "yadgauravātkāñcanapadmahastā",
  "SA07n915:69": "yakṣādhipāḥ saṃparivārya tasthuḥ ||17 ||",
  "SA07n915:70": "adṛśyabhāvāśca divaukasaḥ khe",
  "SA07n915:71": "yasya prabhāvātpraṇataiḥ śīrobhiḥ |",
  "SA07n915:72": "ādhārayan pāṇḍaramātapatraṃ",
  "SA07n915:73": "bodhāya jepuḥ paramāśiṣaśca ||18 ||",
  "SA07n915:74": "mahoragā dharmaviśeṣatarṣād",
  "SA07n915:75": "buddheṣvatīteṣu kṛtādhikārāḥ |",
  "SA07n915:76": "yamavyajan bhaktiviśiṣṭanetrā",
  "SA07n915:77": "mandārapuṣpaiḥ samavākiraṃśca ||19 ||",
  "SA07n915:78": "tathāgatotpādaguṇena tuṣṭāḥ",
  "SA07n915:79": "śuddhādhivāsāśca viśuddhasattvāḥ |",
  "SA07n915:80": "devā nanandurvigate'pi rāge",
  "SA07n915:81": "magnasya duḥkhe jagato hitāya ||20 ||",
  "SA07n915:82": "yasya prasūtau girirājakīlā",
  "SA07n915:83": "vātāhatā nauriva bhūścacāla |",
  "SA07n915:84": "sacandanā cotpalapadmagarbhā",
  "SA07n915:85": "papāta vṛṣṭirgaganādanabhrāt ||21 ||",
  "SA07n915:86": "vātā vavuḥ sparśasukhā manojñā",
  "SA07n915:87": "divyāni vāsāṃsyavapātayantaḥ |",
  "SA07n915:88": "sūryaḥ sa evābhyadhikaṃ cakāśe",
  "SA07n915:89": "jajvāla saumyārciranīrito'gniḥ ||22 ||",
  "SA07n915:90": "prāguttare cāvasathapradeśe",
  "SA07n915:91": "kūpaḥ svayaṃ prādurabhūtsitāmbuḥ",
  "SA07n915:92": "antaḥpurāṇyāgatavismayāni",
  "SA07n915:93": "yasmin kriyāstīrtha iva pracakruḥ ||23 ||",
  "SA07n915:94": "dharmārthibhirbhūtagaṇaiśca divyai-",
  "SA07n915:95": "staddarśanārtha vanamāpupūre |",
  "SA07n915:96": "kautūhalenaiva ca pādapebhyaḥ",
  "SA07n915:97": "puṣpāṇyakāle'pyavapātayadbhiḥ ||24 ||",
  "SA07n915:98": "bhūtairasaumyaiḥ parityaktahiṃsai-",
  "SA07n915:99": "rnākāri pīḍā svagaṇe pare vā |",
  "SA07n915:100": "loke hi sarvāśca vinā prayāsaṃ",
  "SA07n915:101": "rujo narāṇāṃ śamayāṃbabhūvuḥ ||25 ||",
  "SA07n915:102": "kalaṃ praṇeduḥ mṛgapakṣiṇaśca",
  "SA07n915:103": "śāntāmbuvāhāḥ sarito babhūvuḥ |",
  "SA07n915:104": "diśaḥ prasedurvimale nirabhre",
  "SA07n915:105": "vihāyase dundubhayo nineduḥ ||26 ||",
  "SA07n915:106": "lokasya mokṣāya gurau prasūte",
  "SA07n915:107": "śamaṃ prapede jagadavyavastham |",
  "SA07n915:108": "prāpyeva nāthaṃ khalu nītimantam",
  "SA07n915:109": "eko na māro mudamāpa loke ||27 ||",
  "SA07n915:110": "divyādbhutaṃ janma nirīkṣya tasya",
  "SA07n915:111": "dhīro'pi rājā bahukṣobhametaḥ |",
  "SA07n915:112": "snehādasau bhītipramodajanye",
  "SA07n915:113": "dve vāridhāre mumuce narendraḥ ||28 ||",
  "SA07n915:114": "amānuṣī tasya niśamya śaktiṃ",
  "SA07n915:115": "mātā prakṛtyā karuṇārdracittā |",
  "SA07n915:116": "prītā ca bhītā ca babhūva devī",
  "SA07n915:117": "śītoṣṇamiśreva jalasya dhārā ||29 ||",
  "SA07n915:118": "nirīkṣamāṇā bhayahetumeva",
  "SA07n915:119": "dhyātuṃ na śekuḥ vanitāḥ pravṛddhāḥ |",
  "SA07n915:120": "pūtāśca tā maṅgalakarma cakruḥ",
  "SA07n915:121": "śivaṃ yayācuḥ śiśave suraughān ||30 ||",
  "SA07n915:122": "viprāśca khyātāḥ śrutaśīlavāgbhiḥ",
  "SA07n915:123": "śrutvā nimittāni vicārya samyak |",
  "SA07n915:124": "mukhaiḥ praphullaiścakitaiśca dīptaiḥ |",
  "SA07n915:125": "bhītaprasannaṃ nṛpametya procuḥ ||31 ||",
  "SA07n915:126": "śamepsavo ye bhuvi santi sattvāḥ |",
  "SA07n915:127": "putraṃ vinecchanti guṇaṃ na kañcit |",
  "SA07n915:128": "tvatputra eṣo'sti kulapradīpaḥ |",
  "SA07n915:129": "nṛtyotsavaṃ tvadya vidhehi rājan ||32 ||",
  "SA07n915:130": "vihāya cintāṃ bhava śāntacitto",
  "SA07n915:131": "modasva vaṃśastava vṛddhibhāgī |",
  "SA07n915:132": "lokasya netā tava putrabhūtaḥ",
  "SA07n915:133": "duḥkhārditānāṃ bhuvi eṣa trātā ||33 ||",
  "SA07n915:134": "dīpaprabho'yaṃ kanakojjvalāṅgaḥ",
  "SA07n915:135": "sulakṣaṇairyaistu samanvito'sti |",
  "SA07n915:136": "nidhirguṇānāṃ samaye sa gatāṃ",
  "SA07n915:137": "buddharṣibhāvaṃ paramāṃ śriyaṃ vā ||34 ||",
  "SA07n915:138": "icchedasau vai pṛthivīśriyaṃ cet",
  "SA07n915:139": "nyāyena jitvā pṛthivī samagrām |",
  "SA07n915:140": "bhūpeṣu rājeta yathā prakāśaḥ",
  "SA07n915:141": "graheṣu sarveṣu ravervibhāti ||35 ||",
  "SA07n915:142": "mokṣāya cedvā vanameva gacchet |",
  "SA07n915:143": "tattvena samyak sa vijitya sarvān |",
  "SA07n915:144": "matān pṛthivyāṃ bahumānametaḥ",
  "SA07n915:145": "rājeta śaileṣu yathā sumeruḥ ||36 ||",
  "SA07n915:146": "yathā hiraṇyaṃ śuci dhātumadhye",
  "SA07n915:147": "merurgirīṇāṃ sarasāṃ samudraḥ |",
  "SA07n915:148": "tārāsu candrastapatāṃ ca sūryaḥ",
  "SA07n915:149": "putrastathā te dvipadeṣu varyaḥ ||37 ||",
  "SA07n915:150": "tasyākṣiṇī nirnimiṣe viśāle",
  "SA07n915:151": "snigdhe ca dīpte vimale tathaiva |",
  "SA07n915:152": "niṣkampakṛṣṇāyataśuddhapakṣme",
  "SA07n915:153": "draṣṭuṃ samarthe khalu sarvabhāvān ||38 ||",
  "SA07n915:154": "kasmānnu hetoḥ kathitānbhavadbhiḥ",
  "SA07n915:155": "varānguṇān dhārayate kumāraḥ |",
  "SA07n915:156": "prāpurna pūrve munayo nṛpāśca",
  "SA07n915:157": "rājñeti pṛṣṭā jagadus dvijāstam ||39 ||",
  "SA07n915:158": "khyātāni karmāṇi yaśo matiśca",
  "SA07n915:159": "pūrva na bhūtāni bhavanti paścāt |",
  "SA07n915:160": "guṇā hi sarvāḥ prabhavanti hetoḥ",
  "SA07n915:161": "nidarśanānyatra ca no nibodha ||40 ||",
  "SA07n915:162": "yadrājaśāstraṃ bhṛguraṅgirā vā",
  "SA07n915:163": "na cakraturvaśakarāvṛṣī tau |",
  "SA07n915:164": "tayoḥ sutau saumya sasarjatusta-",
  "SA07n915:165": "tkālena śukraśca bṛhaspatiśca ||41 ||",
  "SA07n915:166": "sārasvataścāpi jagāda naṣṭaṃ",
  "SA07n915:167": "vedaṃ punaryaṃ dadṛśurna pūrve |",
  "SA07n915:168": "vyāsastathainaṃ bahudhā cakāra",
  "SA07n915:169": "na yaṃ vasiṣṭhaḥ kṛtavānaśaktiḥ ||42 ||",
  "SA07n915:170": "vālmīkirādau ca sasarja padyaṃ",
  "SA07n915:171": "jagrantha yanna cyavano maharṣiḥ |",
  "SA07n915:172": "cikitsitaṃ yacca cakāra nātriḥ",
  "SA07n915:173": "paścāttadātreya ṛṣirjagāda ||43 ||",
  "SA07n915:174": "yacca dvijatvaṃ kuśiko na lebhe",
  "SA07n915:175": "tadgādhinaḥ sunūravāpa rājan |",
  "SA07n915:176": "velāṃ samudre sagaraśca dadhre",
  "SA07n915:177": "nekṣvākavo yāṃ prathamaṃ babandhuḥ ||44 ||",
  "SA07n915:178": "ācāryakaṃ yogavidhau dvijānā-",
  "SA07n915:179": "maprāptamanyairjanako jagāma |",
  "SA07n915:180": "khyātāni karmāṇi ca yāni śaureḥ",
  "SA07n915:181": "śūrādayasteṣvabalā babhūvuḥ ||45 ||",
  "SA07n915:182": "tasmātpramāṇaṃ na vayo na vaṃśaḥ",
  "SA07n915:183": "kaścitkvacicchraiṣṭhyamupaiti loke |",
  "SA07n915:184": "rājñāmṛṣīṇāṃ ca hi tāni tāni",
  "SA07n915:185": "kṛtāni putrairakṛtāni pūrvaiḥ ||46 ||",
  "SA07n915:186": "evaṃ nṛpaḥ pratyayitairdvijaistai-",
  "SA07n915:187": "rāśvāsitaścāpyabhinanditaśca |",
  "SA07n915:188": "śaṅkāmaniṣṭāṃ vijahau manastaḥ",
  "SA07n915:189": "praharṣamevādhikamāruroha || 47 ||",
  "SA07n915:190": "prītaśca tebhyo dvijasattamebhyaḥ",
  "SA07n915:191": "satkārapūrva pradadau dhanāni |",
  "SA07n915:192": "bhūyādayaṃ bhūmipatiryathokto",
  "SA07n915:193": "yāyājjarāmetya vanāni ceti ||48 ||",
  "SA07n915:194": "atho nimittaiśca tapobalācca",
  "SA07n915:195": "tajjanma janmāntakarasya buddhvā |",
  "SA07n915:196": "śākyeśvarasyālayamājagāma",
  "SA07n915:197": "saddharmatarṣādasito maharṣiḥ ||49 ||",
  "SA07n915:198": "taṃ brahmavidbrahmavidaṃ jvalantaṃ",
  "SA07n915:199": "brāhmyā śriyā caiva tapaḥśriyā ca |",
  "SA07n915:200": "rājño gururgauravasatkriyābhyāṃ",
  "SA07n915:201": "praveśāyāmāsa narendrasadma ||50 ||",
  "SA07n915:202": "sa pārthivāntaḥpurasaṃnikarṣa",
  "SA07n915:203": "kumārajanmāgataharṣavegaḥ |",
  "SA07n915:204": "viveśa dhīro vanasaṃjñayeva",
  "SA07n915:205": "tapaḥprakarṣācca jarāśrayācca ||51 ||",
  "SA07n915:206": "tato nṛpastaṃ munimāsanasthaṃ",
  "SA07n915:207": "pādyārdhyapūrvaṃ pratipūjya samyak |",
  "SA07n915:208": "nimantrayāmāsa yathopacāraṃ",
  "SA07n915:209": "purā vasiṣṭhaṃ sa ivāntidevaḥ ||52 ||",
  "SA07n915:210": "dhanyo'smyanugrāhyamidaṃ kulaṃ me |",
  "SA07n915:211": "yanmāṃ didṛkṣurbhagavānupetaḥ |",
  "SA07n915:212": "ājñāpyatāṃ kiṃ karavāṇi saumya",
  "SA07n915:213": "śiṣyo'smi viśrambhitumarhasīti ||53 ||",
  "SA07n915:214": "evaṃ nṛpeṇopanimantritaḥ sa-",
  "SA07n915:215": "nsarveṇa bhāvena muniryathāvat |",
  "SA07n915:216": "sa vismayotphullaviśāladṛṣṭi-",
  "SA07n915:217": "rgambhīradhīrāṇi vacāṃsyuvāca ||54 ||",
  "SA07n915:218": "mahātmani tvayyupapannameta-",
  "SA07n915:219": "tpriyātithau tyāgini dharmakāme |",
  "SA07n915:220": "sattvānvayajñānavayo'nurūpā",
  "SA07n915:221": "snigdhā yadevaṃ mayi me matiḥ syāt ||55 ||",
  "SA07n915:222": "etacca tadyena nṛparṣayaste |",
  "SA07n915:223": "dharmeṇa sūkṣmeṇa dhanānyavāpya |",
  "SA07n915:224": "nityaṃ tyajanto vidhivadbabhūvu-",
  "SA07n915:225": "stapobhirāḍhyā vibhavairdaridrāḥ ||56 ||",
  "SA07n915:226": "prayojanaṃ yattu mamopayāne",
  "SA07n915:227": "tanme śṛṇu prītimupehi ca tvam |",
  "SA07n915:228": "divyā mayādityapathe śrutā vā-",
  "SA07n915:229": "gbodhāya jātastanayastaveti ||57 ||",
  "SA07n915:230": "śrutvā vacastacca manaśca yuktvā",
  "SA07n915:231": "jñātvā nimittaiśca tato'smyupetaḥ |",
  "SA07n915:232": "didṛkṣayā śākyakuladhvajasya",
  "SA07n915:233": "śakradhvajasyeva samucchritasya ||58 ||",
  "SA07n915:234": "ityetadevaṃ vacanaṃ niśamya",
  "SA07n915:235": "praharṣasaṃbhrāntagatinarendraḥ |",
  "SA07n915:236": "ādāya dhātryaṅkagataṃ kumāraṃ",
  "SA07n915:237": "saṃdarśayāmāsa tapodhanāya ||59 ||",
  "SA07n915:238": "cakrāṅkapādaṃ sa tato maharṣi-",
  "SA07n915:239": "rjālāvanaddhāṅgulipāṇipādam |",
  "SA07n915:240": "sorṇabhruvaṃ vāraṇavastikośaṃ",
  "SA07n915:241": "savismayaṃ rājasutaṃ dadarśa ||60 ||",
  "SA07n915:242": "dhātryaṅkasaṃviṣṭamavekṣya cainaṃ",
  "SA07n915:243": "devyaṅkasaṃviṣṭamivāgnisūnum |",
  "SA07n915:244": "babhūva pakṣmāntavicañcitāśru-",
  "SA07n915:245": "rniśvasya caiva tridivonmukho'bhūt ||61 ||",
  "SA07n915:246": "dṛṣṭvāsitaṃ tvaśrupariplutākṣaṃ |",
  "SA07n915:247": "snehāttanūjasya nṛpaścakampe |",
  "SA07n915:248": "sagadgadaṃ bāṣpakaṣāyakaṇṭhaḥ",
  "SA07n915:249": "papraccha sa prāñjalirānatāṅgaḥ ||62 ||",
  "SA07n915:250": "alpāntaraṃ yasya vapuḥ surebhyo",
  "SA07n915:251": "bavhadbhutaṃ yasya ca janma dīptam |",
  "SA07n915:252": "yasyottamaṃ bhāvinamāttha cārtha",
  "SA07n915:253": "taṃ prekṣya kasmāttava dhīra bāṣpaḥ ||63 ||",
  "SA07n915:254": "api sthirāyurbhagavan kumāraḥ",
  "SA07n915:255": "kaccinna śokāya mama prasūtaḥ |",
  "SA07n915:256": "labdhaḥ kathaṃcitsalilāñjalirme",
  "SA07n915:257": "na khalvimaṃ pātumupaiti kālaḥ ||64 ||",
  "SA07n915:258": "apyakṣayaṃ me yaśaso nidhānaṃ",
  "SA07n915:259": "kacciddhruvo me kulahastasāraḥ |",
  "SA07n915:260": "api prayāsyāmi sukhaṃ paratra",
  "SA07n915:261": "supto'pi putre'nimiṣaikacakṣuḥ ||65 ||",
  "SA07n915:262": "kaccinna me jātamaphullameva",
  "SA07n915:263": "kulapravālaṃ pariśoṣabhāgi |",
  "SA07n915:264": "kṣipraṃ vibho brūhi na me'sti śāntiḥ",
  "SA07n915:265": "snehaṃ sute vetsi hi bāndhavānām ||66 ||",
  "SA07n915:266": "ityāgatāvegamaniṣṭabuddhyā",
  "SA07n915:267": "buddhvā narendraṃ sa munirbabhāṣe |",
  "SA07n915:268": "mā bhūnmatiste nṛpa kācidanyā",
  "SA07n915:269": "niḥsaṃśayaṃ tadyadavocamasmi ||67 ||",
  "SA07n915:270": "nāsyānyathātvaṃ prati vikriyā me",
  "SA07n915:271": "svāṃ vañcanāṃ tu prati viklavo'smi |",
  "SA07n915:272": "kālo hi me yātumayaṃ ca jāto",
  "SA07n915:273": "jātikṣayasyāsulabhasya boddhā ||68 ||",
  "SA07n915:274": "vihāya rājyaṃ viṣayeṣvanāstha-",
  "SA07n915:275": "stīvraiḥ prayatnairadhigamya tattvam |",
  "SA07n915:276": "jagatyayaṃ mohatamo nihantuṃ",
  "SA07n915:277": "jvaliṣyati jñānamayo hi sūryaḥ ||69 ||",
  "SA07n915:278": "duḥkhārṇavādvyādhivikīrṇaphenā-",
  "SA07n915:279": "jjarātaraṅgānmaraṇogravegāt |",
  "SA07n915:280": "uttārayiṣyatyayamuhyamāna-",
  "SA07n915:281": "mārta jagajjñānamahāplavena ||70 ||",
  "SA07n915:282": "prajñāmbuvegāṃ sthiraśīlavaprāṃ",
  "SA07n915:283": "samādhiśītāṃ vratacakravākām |",
  "SA07n915:284": "asyottamāṃ dharmanadī pravṛtāṃ |",
  "SA07n915:285": "tṛṣṇārditaḥ pāsyati jīvalokaḥ ||71 ||",
  "SA07n915:286": "duḥkhārditebhyo viṣayāvṛtebhyaḥ",
  "SA07n915:287": "saṃsārakāntārapathasthitebhyaḥ |",
  "SA07n915:288": "ākhyāsyati hyeṣa vimokṣamārga",
  "SA07n915:289": "mārgapranaṣṭebhya ivādhvagebhyaḥ ||72 ||",
  "SA07n915:290": "vidahyamānāya janāya loke",
  "SA07n915:291": "rāgāgnināyaṃ viṣayendhanena |",
  "SA07n915:292": "pralhādamādhāsyati dharmavṛṣṭyā",
  "SA07n915:293": "vṛṣṭyā mahāmegha ivātapānte ||73 ||",
  "SA07n915:294": "tṛṣṇārgalaṃ mohatamaḥkapāṭaṃ",
  "SA07n915:295": "dvāraṃ prajānāmapayānahetoḥ |",
  "SA07n915:296": "vipāṭayiṣyatyayamuttamena",
  "SA07n915:297": "saddharmatāḍena durāsadena ||74 ||",
  "SA07n915:298": "svairmohapāśaiḥ pariveṣṭitasya",
  "SA07n915:299": "duḥkhābhibhūtasya nirāśrayasya |",
  "SA07n915:300": "lokasya saṃbudhya ca dharmarājaḥ",
  "SA07n915:301": "kariṣyate bandhanamokṣameṣaḥ ||75 ||",
  "SA07n915:302": "tanmā kṛthāḥ śokamimaṃ prati tva-",
  "SA07n915:303": "masminsa śocyo'sti manuṣyaloke |",
  "SA07n915:304": "mohena vā kāmasukhairmadādvā",
  "SA07n915:305": "yo naiṣṭhikaṃ śroṣyati nāsya dharmam ||76 ||",
  "SA07n915:306": "bhraṣṭasya tasmācca guṇādato me",
  "SA07n915:307": "dhyānāni labdhvāpyakṛtārthataiva |",
  "SA07n915:308": "dharmasya tasyāśravaṇādahaṃ hi",
  "SA07n915:309": "manye vipattiṃ tridive'pi vāsam ||77 ||",
  "SA07n915:310": "iti śrutārthaḥ sasuhṛtsadāra-",
  "SA07n915:311": "styaktvā viṣādaṃ mumude narendraḥ |",
  "SA07n915:312": "evaṃvidho'yaṃ tanayo mameti",
  "SA07n915:313": "mene sa hi svāmapi sāravattām ||78 ||",
  "SA07n915:314": "ārṣeṇa mārgeṇa tu yāsyatīti",
  "SA07n915:315": "cintāvidheyaṃ hṛdayaṃ cakāra |",
  "SA07n915:316": "na khalvasau na priyadharmapakṣaḥ |",
  "SA07n915:317": "saṃtānanāśāttu bhayaṃ dadarśa ||79 ||",
  "SA07n915:318": "atha munirasito nivedya tattvaṃ",
  "SA07n915:319": "sutaniyataṃ sutaviklavāya rājñe |",
  "SA07n915:320": "sabahumatumudīkṣyamāṇarūpaḥ",
  "SA07n915:321": "pavanapathena yathāgataṃ jagāma ||80 ||",
  "SA07n915:322": "kṛtamitiranujāsutaṃ ca dṛṣṭvā",
  "SA07n915:323": "munivacanaśravaṇe ca tanmatau ca |",
  "SA07n915:324": "bahuvidhamanukampayā sa sādhuḥ",
  "SA07n915:325": "priyasutavadviniyojayāṃcakāra ||81 ||",
  "SA07n915:326": "narapatirapi putrajanmatuṣṭo",
  "SA07n915:327": "viṣayagatāni vimucya bandhanāni |",
  "SA07n915:328": "kulasadṛśamacīrakaradyathāva-",
  "SA07n915:329": "tpriyatanayastanayasya jātakarma ||82 ||",
  "SA07n915:330": "daśasu pariṇateṣvahaḥsu caiva",
  "SA07n915:331": "prayatamanāḥ parayā mudā parītaḥ |",
  "SA07n915:332": "akuruta japahomamaṅgalādyāḥ",
  "SA07n915:333": "paramabhavāya sutasya devatejyāḥ ||83 ||",
  "SA07n915:334": "api ca śatasahasrapūrṇasaṃkhyāḥ",
  "SA07n915:335": "sthirabalavattanayāḥ sahemaśṛṅgīḥ |",
  "SA07n915:336": "anupagatajarāḥ payasvinīrgāḥ",
  "SA07n915:337": "svayamadadātsutavṛddhaye dvijebhyaḥ ||84 ||",
  "SA07n915:338": "bahuvidhaviṣayāstato yatātmā",
  "SA07n915:339": "svahṛdayatoṣakarīḥ kriyā vidhāya |",
  "SA07n915:340": "guṇavati niyate śive muhūrte",
  "SA07n915:341": "matimakaronmuditaḥ purapraveśe ||85 ||",
  "SA07n915:342": "dviradaradamayīmatho mahārhā",
  "SA07n915:343": "sitasitapuṣpabhṛtāṃ maṇipradīpām |",
  "SA07n915:344": "abhajata śivikāṃ śivāya devī",
  "SA07n915:345": "tanayavatī praṇipatya devatābhyaḥ ||86 ||",
  "SA07n915:346": "puramatha purataḥ praveśya patnīṃ",
  "SA07n915:347": "sthavirajanānugatāmapatyanāthām |",
  "SA07n915:348": "nṛpatirapi jagāma paurasaṃghai-",
  "SA07n915:349": "rdivamamarairmaghavānivārcyamānaḥ ||87 ||",
  "SA07n915:350": "bhavanamatha vigāhya śākyarājo",
  "SA07n915:351": "bhava iva ṣaṇmukhajanmanā pratītaḥ |",
  "SA07n915:352": "idamidamiti harṣapūrṇavaktro",
  "SA07n915:353": "bahuvidhapuṣṭiyaśaskaraṃ vyadhatta ||88 ||",
  "SA07n915:354": "iti narapatiputrajanmavṛddhyā",
  "SA07n915:355": "sajanapadaṃ kapilāvhayaṃ puraṃ tat |",
  "SA07n915:356": "dhanadapuramivāpsaro'vakīrṇa",
  "SA07n915:357": "muditamabhūnnalakūbaraprasūtau ||89 ||",
  "SA07n915:358": "iti buddhacarite mahākāvye",
  "SA07n915:359": "bhagavatprasūtirnāma prathamaḥ sargaḥ ||1 ||"
}