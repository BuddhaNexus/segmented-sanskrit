{
  "S04n297:0": "Daśabhūmikasūtre gāthāvibhāgaḥ |",
  "S04n297:1": "1 pramuditā nāma prathamā bhūmiḥ |",
  "S04n297:2": "upakramaḥ |",
  "S04n297:3": "te śukladharmupacitāḥ kuśalopapetāḥ",
  "S04n297:4": "paryupāsitāḥ sugatamaitrakṛpānukūlāḥ |",
  "S04n297:5": "adhimuktyudāra kuśalāśaya śuddhabhāvā-",
  "S04n297:6": "ścittaṃ janenti atulaṃ jinajñānahetoḥ || 1 ||",
  "S04n297:7": "sarvajñabuddhabalaśodhanavīryasthāmā",
  "S04n297:8": "jinadharmaniṣpattijagatparitrāyaṇārthāḥ |",
  "S04n297:9": "mahākṛpocayavartanadharmacakraṃ",
  "S04n297:10": "jinakṣetraśodhamupapadyati cittaśreṣṭham || 2 ||",
  "S04n297:11": "tryadhvaikavīkṣaṇavibuddhananirvikalpā",
  "S04n297:12": "nānāvidhe jagati kālaviśodhanārtham |",
  "S04n297:13": "saṃkṣepasarvaguṇa eṣitu nāyakānām",
  "S04n297:14": "ākāśatulya samudeti udāracittam || 3 ||",
  "S04n297:15": "prajñādhipatya kṛpapūrvamupāyayuktam",
  "S04n297:16": "adhimukti - āśaya - viśuddha - balāpramāṇam |",
  "S04n297:17": "āsaṅgatābhimukhatā - aparapraṇeyaṃ",
  "S04n297:18": "samatopapeta - sugataṃ varacittajātam || 4 ||",
  "S04n297:19": "sahajāticittaratanaṃ sugatātmajānām",
  "S04n297:20": "atikrānta bālacari buddhacari hyupetaḥ |",
  "S04n297:21": "jātaḥ kule daśabalāna anodyapadyaḥ",
  "S04n297:22": "samatāṃ jine anugato niyatāgrabodhiḥ || 5 ||",
  "S04n297:23": "ekasmi citta upapadyati bhūmilābho",
  "S04n297:24": "bhavate acalyu girirājasamāśayaśca |",
  "S04n297:25": "prāmodyaprītibahulaśca prasādavāṃśca",
  "S04n297:26": "utsāhavegavipulaḥ sadudagracittaḥ || 6 ||",
  "S04n297:27": "saṃrambhahiṃsavigataśca akrodhanaśca",
  "S04n297:28": "hrīgauravārjavataraśca susaṃvṛtaśca |",
  "S04n297:29": "jagatāyanaṃ smarati apratimānajñānaṃ",
  "S04n297:30": "prītiṃ janetyupagataspṛhameta sthānam || 7 ||",
  "S04n297:31": "pañcā bhayā apagatāḥ sahabhūmilābho",
  "S04n297:32": "ājīvikā maraṇa kīrtyatha durgatiśca |",
  "S04n297:33": "parṣadbhayaṃ ca vigataṃ tatha chambhitatvaṃ",
  "S04n297:34": "kiṃ kāraṇaṃ tatha hi ātmaniketu nāsti || 8 ||",
  "S04n297:35": "te chambhitatvavigatāḥ kṛpamaitrayuktāḥ",
  "S04n297:36": "śraddhāsagauravahriyopagatā guṇāḍhyāḥ |",
  "S04n297:37": "rātriṃdivaṃ kuśalapakṣa niṣevamāṇāḥ",
  "S04n297:38": "satyārtha dharmaniratā na tu kāmabhogaiḥ || 9 ||",
  "S04n297:39": "śrutadharmacintakuśalā aniketacittā",
  "S04n297:40": "lābhādaśīcittagatā uta bodhicittāḥ |",
  "S04n297:41": "jñānābhilāṣi balaśodhanabuddhadharmā",
  "S04n297:42": "eṣanti pāramita varjitamāyaśāṭhyāḥ || 10 ||",
  "S04n297:43": "yathāvādinastathakriyāḥ sthitasatyavākyā",
  "S04n297:44": "na tu dūṣaṇā jinakule cari bodhiśikṣām |",
  "S04n297:45": "lokakriyāya vigatā niratā jagārthaṃ",
  "S04n297:46": "śuklairatṛpta bhumayottarimārabhante || 11 ||",
  "S04n297:47": "te eva dharmaniratā guṇārthayuktā",
  "S04n297:48": "abhinirharanti praṇidhiṃ jinadarśanāya |",
  "S04n297:49": "saddharmadhāraṇa upasaṃkramaṇā ṛṣiṇām",
  "S04n297:50": "abhinirharanti praṇīdhiṃ varacārikāyām || 12 ||",
  "S04n297:51": "paripākasattvapariśodhanabuddhakṣetraṃ",
  "S04n297:52": "te cāsya kṣetra sphuṭikā jinaaurasehi |",
  "S04n297:53": "ekāśayā jinasutehi amoghatāyāḥ",
  "S04n297:54": "sarvatra bālapathi buddhiya hetumarthe || 13 ||",
  "S04n297:55": "etāṃśca naikapraṇidhīnabhinirharanti",
  "S04n297:56": "te co anantavipulāya anantatāyai |",
  "S04n297:57": "ākāśadhātusattvadharmatanirvṛtaṃ ca",
  "S04n297:58": "loko hyaniṣṭha jinamutpadi jñānabhūmī || 14 ||",
  "S04n297:59": "cittasya no viṣayajñānapraveśaniṣṭhā",
  "S04n297:60": "yā vartani trividhaniṣṭha jagatyanantā |",
  "S04n297:61": "praṇidhānaniṣṭhitu bhavenna mamaivarūpā",
  "S04n297:62": "yatha eta niṣṭha tatha carya samā labheyam || 15 ||",
  "S04n297:63": "evaṃ sunirhṛtasumārdavasnigdhacittāḥ",
  "S04n297:64": "śraddheta buddhaguṇa sattva vilokayantaḥ |",
  "S04n297:65": "prītyāntulambhupagataḥ kṛpamaitratāṃ ca",
  "S04n297:66": "paritāyitavya maya sattva dukhārditāni || 16 ||",
  "S04n297:67": "teṣārthi tyāga vividhaṃ puna ārabhante",
  "S04n297:68": "rājyaṃ varaṃ vividharatnahayān gajāṃśca |",
  "S04n297:69": "śirahastapādanayanā svakamātmamāṃsaṃ",
  "S04n297:70": "sarvaṃ tyajanti na ca dīnamanā bhavanti || 17 ||",
  "S04n297:71": "eṣanti śāstra vividhānna ca khedamenti |",
  "S04n297:72": "śāstrajña lokacaritānyanuvartayanti |",
  "S04n297:73": "lokajñatāmupagatā hriyatā dhṛtiṃ ca",
  "S04n297:74": "pūjyanti cāpratisamān gurugauraveṇa || 18 ||",
  "S04n297:75": "eṣābhiyuktavidunā divarātri nityam",
  "S04n297:76": "uttapyate kuśala svarṇa yathaiva agnau |",
  "S04n297:77": "so cāpi eva parikarma daśāna bhūmī",
  "S04n297:78": "kṛtvā asaṅgatamupeti aviṣṭhihantā || 19 ||",
  "S04n297:79": "yatha sārthavāha mahasārthahitāya yukto",
  "S04n297:80": "pucchitva mārgaguṇa kṣematamabhyupeti |",
  "S04n297:81": "emeva bhūmi prathamā sthita bodhisattvaḥ",
  "S04n297:82": "kṛtaniṣkramo daśabhibodhimupetyasaṅgaḥ || 20 ||",
  "S04n297:83": "atra sthitā guṇadharā nṛpatī bhavanti",
  "S04n297:84": "dharmānuśāsaka ahiṃsaka maitrayuktāḥ |",
  "S04n297:85": "jambudhvajaṃ sakalarājya praśāsayantaḥ",
  "S04n297:86": "sthāpenti tyāgi janatāṃ varabuddhajñāne || 21 ||",
  "S04n297:87": "ākāṅkṣamāṇa vṛṣabhā vijahitva rājyaṃ",
  "S04n297:88": "jinaśāsane upagatāścari ārabhantaḥ |",
  "S04n297:89": "labdhvā samādhiśata buddhaśataṃ ca paśyi",
  "S04n297:90": "kampenti kṣetraśatu bhāsi atikramanti || 22 ||",
  "S04n297:91": "śodhyanti sattvaśata dharmamukhān viśanti",
  "S04n297:92": "praviśanti kalpaśatakāyaśataṃ nidarśi |",
  "S04n297:93": "pūrṇaṃ śataṃ jinasutāna nidarśayanti",
  "S04n297:94": "bhūyottari praṇidhiśreṣṭhabalāpramāṇāḥ || 23 ||",
  "S04n297:95": "ityeṣā prathamā bhūmirnidiṣṭā sugatātmajāḥ |",
  "S04n297:96": "sarvalokahitaiṣīṇāṃ bodhisattvānanutamā || 24 ||"
}