{
  "S04n500:0": "smitavyākaraṇaparivartaḥ |",
  "S04n500:1": "atha khalu bhagavāṃstasyāṃ velāyāṃ maitreyaṃ bodhisattvaṃ mahāsattvamābhiḥ sārūpyābhirgāthābhiḥ pratyabhāṣata-",
  "S04n500:2": "candraprabho eṣa kumārabhūtaḥ",
  "S04n500:3": "saṃstutya buddhamatulīya prītiyā |",
  "S04n500:4": "bhāṣitva buddhāna viśiṣṭa varṇaṃ",
  "S04n500:5": "praśaṃsanīyaḥ sada kāli bheṣyati || 1 ||",
  "S04n500:6": "ihaiva co rājagṛhasmi pūrvaṃ",
  "S04n500:7": "dṛṣṭvaiva buddhāna sahasrakoṭayaḥ |",
  "S04n500:8": "sarveṣa cānena jināna antike",
  "S04n500:9": "ayaṃ varaḥ śāntasamādhi pṛcchitaḥ || 2 ||",
  "S04n500:10": "sarvatra co eṣa mamāsi putro",
  "S04n500:11": "imāṃ caranto varabodhicārikām |",
  "S04n500:12": "sarvatra cāsīt pratibhānavantaḥ",
  "S04n500:13": "sarvatra cāsīt sada brahmacārī || 3 ||",
  "S04n500:14": "sa paścime kāli mahābhayānake",
  "S04n500:15": "tvameva sākṣī ajitā mamātra |",
  "S04n500:16": "sthihitva śuddhe sada brahmacarye",
  "S04n500:17": "vaistārikaṃ eṣa samādhi kāhite || 4 ||",
  "S04n500:18": "samādhimeṣantu idaṃ praṇītaṃ",
  "S04n500:19": "etena mārgeṇa sa bodhi lapsyate |",
  "S04n500:20": "parigṛhīto bahubuddhakoṭibhiḥ",
  "S04n500:21": "pūjāṃ varāṃ kāhiti nāyakānām || 5 ||",
  "S04n500:22": "jñāne sthihitvā ahu vyākaromi",
  "S04n500:23": "candraprabhasyācaritaṃ viśiṣṭam |",
  "S04n500:24": "na paścakāle'sya bhave'ntarāyo",
  "S04n500:25": "na brahmacaryasya na jīvitasya || 6 ||",
  "S04n500:26": "haste yathā āmalakāni pañca",
  "S04n500:27": "prajānāti buddhasahasrakoṭayaḥ |",
  "S04n500:28": "taduttare yāttika gaṅgavālikā",
  "S04n500:29": "anāgatā yeṣviya pūjanā hoti || 7 ||",
  "S04n500:30": "devāna nāgāna aśītikoṭayaḥ",
  "S04n500:31": "yakṣāṇa co koṭisahasra saptatiḥ |",
  "S04n500:32": "autsukyameṣanti ya paścakāle",
  "S04n500:33": "pūjāṃ karontā dvipadottamānām || 8 ||",
  "S04n500:34": "sa pūja kṛtvā dvipadāna uttamān",
  "S04n500:35": "samudācari jñānamimaṃ niruttaram |",
  "S04n500:36": "sa paścime cocchrayi lokanātho",
  "S04n500:37": "vimalaprabho nāma jino bhaviṣyati || 9 ||",
  "S04n500:38": "idaṃ svakaṃ vyākaraṇaṃ śrutitvā",
  "S04n500:39": "prītisphuṭo āsi kumārabhūtaḥ |",
  "S04n500:40": "candraprabho udgata sapta tāla",
  "S04n500:41": "udānudāneti nabhe sthihitvā || 10 ||",
  "S04n500:42": "aho jinā uttamadharmadeśakā",
  "S04n500:43": "vimuktijñānādhipatībale sthitā |",
  "S04n500:44": "suniścite uttamajñāni tiṣṭhasi",
  "S04n500:45": "anābhibhūto'si parapravādibhiḥ || 11 ||",
  "S04n500:46": "vivarjitā saṅga vimukti sparśitā",
  "S04n500:47": "vibhāvitaṃ vastu bhave na sajjasi |",
  "S04n500:48": "prapañca sarve sakalā na bhonti te",
  "S04n500:49": "asaṅgajñānaṃ tribhave'bhivartate || 12 ||",
  "S04n500:50": "sarvaprapañcebhiranopaliptā",
  "S04n500:51": "dṛṣṭiḥ prapañcāḥ sakalāḥ prahīṇāḥ |",
  "S04n500:52": "subhāviate mārga niketu nāsti",
  "S04n500:53": "anābhibhūtā aviruddha kenacita || 13 ||",
  "S04n500:54": "niketu traidhātuki nāsti tubhyaṃ",
  "S04n500:55": "oghāśca granthāśca prahīṇa sarve |",
  "S04n500:56": "tṛṣṇālatābandhana sarvi chinnā",
  "S04n500:57": "bhava prahīṇo bhavasaṃghi nāsti || 14 ||",
  "S04n500:58": "svabhāvu dharmāṇamabhāvu jānase",
  "S04n500:59": "anābhilapyā gira saṃprabhāṣase |",
  "S04n500:60": "siṃhena vā kroṣṭuka tīrtha nāśitā",
  "S04n500:61": "ye te viparyāsasthitā avidvasu || 15 ||",
  "S04n500:62": "nidhāna śreṣṭhaṃ mayi labdhamadya",
  "S04n500:63": "dharmaṃ nidhānaṃ sugatena deśitam |",
  "S04n500:64": "prahīṇa sarvā vinipātu durgati",
  "S04n500:65": "kāṅkṣā na mehāsti bhaviṣya nāyakaḥ || 16 ||",
  "S04n500:66": "mūrdhasmi pāṇiṃ pratisthāpayitvā",
  "S04n500:67": "suvarṇavarṇaṃ ruciraṃ prabhāsvaram |",
  "S04n500:68": "abhiṣiñca bodhāya nararṣabhastaṃ",
  "S04n500:69": "sadevakaṃ loka sthapetva sākṣiṇam || 17 ||",
  "S04n500:70": "iti śrīsamādhirāje smitavyākaraṇaparivarto nāma pañcadaśaḥ || 15 ||"
}