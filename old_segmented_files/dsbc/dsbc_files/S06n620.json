{
  "S06n620:0": "29",
  "S06n620:1": "251. caturbhī ca dhyāna viharanti mahānubhāvā",
  "S06n620:2": "na ca ālayo na pi ca niśrayu kurvayāti |",
  "S06n620:3": "api kho punāśrayu ime catudhyāna sāṅgā",
  "S06n620:4": "bheṣyanti bodhivarauttamaprāpaṇāya ||1 ||",
  "S06n620:5": "252. dhyāne sthito'tra bhavatī varaprajñalābhī",
  "S06n620:6": "ārūpyarūpi ca samādhi catasra śreṣṭhā |",
  "S06n620:7": "upakāribhūta imi dhyāna varāgrabodhau",
  "S06n620:8": "na punāsravakṣati sa śikṣati bodhisattvo ||2 ||",
  "S06n620:9": "253. āścaryamadbhutamidaṃ guṇasaṃcayānāṃ",
  "S06n620:10": "dhyāne samādhi viharanti nimitta nāsti |",
  "S06n620:11": "tatra sthitāna yadi bhajyati ātmabhāvo",
  "S06n620:12": "puna kāmadhātu upapadyati yathābhiprāyā ||3 ||",
  "S06n620:13": "254. yatha jambudvīpaka manuṣya alabdhapūrvā",
  "S06n620:14": "divi devauttamapurā anuprāpuṇeyā |",
  "S06n620:15": "paśyitva te viṣaya tatra parigṛhītā",
  "S06n620:16": "punarāgameya na ca niśrayu tatra kuryāt ||4 ||",
  "S06n620:17": "255. emeva te guṇadharā varabodhisattvā",
  "S06n620:18": "dhyāne samādhi viharitva prayuktayogī |",
  "S06n620:19": "puna kāmadhātusthita bhonti anopaliptā",
  "S06n620:20": "padmeva vāriṇi aniśrita bāladharme ||5 ||",
  "S06n620:21": "256. anyatra sattvaparipācana kṣetraśodhī",
  "S06n620:22": "paripūraṇārtha imi pāramitā mahātmā |",
  "S06n620:23": "ārūpyadhātuupapatti na prārthayantī",
  "S06n620:24": "yatreha bodhiguṇapāramitāna hāni ||6 ||",
  "S06n620:25": "257. yatha kaścideva puruṣo ratanaṃ nidhānaṃ",
  "S06n620:26": "labdhvā tu tatra spṛhabuddhi na saṃjaneyyā |",
  "S06n620:27": "ekāki so puna gṛhītva parasmi kāle",
  "S06n620:28": "gṛhṇitva geha praviśitva na bhoti lubdho ||7 ||",
  "S06n620:29": "258. emeva dhyāna catureva samādhi śāntāṃ",
  "S06n620:30": "labdhvāna prīti sukhadāṃ vidu bodhisattvāḥ |",
  "S06n620:31": "avasṛjya dhyānasukhaprītisamādhilābhaṃ",
  "S06n620:32": "puna kāmadhātu praviśanti jagānukampī ||8 ||",
  "S06n620:33": "259. yadi bodhisattva viharāti samādhidhyāne",
  "S06n620:34": "rahapratyayāni spṛhabuddhi na saṃjaneyyā |",
  "S06n620:35": "asamāhito bhavati uddhatakṣiptacitto",
  "S06n620:36": "parihīnabuddhiguṇa nāvika bhinnanāvo ||9 ||",
  "S06n620:37": "260. kiṃcāpi rūpamapi śabda tathaiva gandho",
  "S06n620:38": "rasa sparśa kāmaguṇa pañcabhi yukta bhogī |",
  "S06n620:39": "rahapratyayāna vigato'nantabodhisattvo",
  "S06n620:40": "satataṃ samāhitu prajānayitavya śūro ||10 ||",
  "S06n620:41": "261. parasattvapudgalanidāna viśuddhasattvā",
  "S06n620:42": "vicaranti vīryabalapāramitābhiyuktāḥ |",
  "S06n620:43": "yatha kumbhadāsi avaśāvaśa bhartikasya",
  "S06n620:44": "tatha sarvasattvavaśatāmupayānti dhīrāḥ ||11 ||",
  "S06n620:45": "262. na ca svāmikasya prativākyu dadāti dāsī",
  "S06n620:46": "ākruṣṭa cāpi athavā sada tāḍitā vā |",
  "S06n620:47": "ekāntatrastamanasā sa bhayābhibhūtā",
  "S06n620:48": "māmeva so anu vadhiṣyati kāraṇena ||12 ||",
  "S06n620:49": "263. emeva bodhivaraprasthitu bodhisattvo",
  "S06n620:50": "tiṣṭheya sarvajagatī yatha preṣyabhūto |",
  "S06n620:51": "anu bodhiāgamu guṇāna ca pāripūrī",
  "S06n620:52": "tṛṇa agni kāṣṭhaprabhavo dahate tameva ||13 ||",
  "S06n620:53": "264. avasṛjya ātma sugatāṃ parasattvakārye",
  "S06n620:54": "abhiyukta rātridiva niṣpratikāṅkṣacitto |",
  "S06n620:55": "māteva ekasutake paricāryamāṇo",
  "S06n620:56": "adhyāśaye na parikhinna upasthiheti ||14 ||",
  "S06n620:57": "bhagavatyāṃ ratnaguṇasaṃcayagāthāyāmanugamaparivarto nāmaikūnatriṃśatimaḥ ||"
}