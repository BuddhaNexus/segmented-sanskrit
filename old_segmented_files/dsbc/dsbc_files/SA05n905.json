{
  "SA05n905:0": "vajradevīstotram",
  "SA05n905:1": "ācāryanāgārjunaviracitam",
  "SA05n905:2": "om namaḥ śrīyoginīdevyai",
  "SA05n905:3": "ḍākī yā sarvabuddhā sakalabhayaharā vyāpinī viśvamātā",
  "SA05n905:4": "ekāsyā raktavarṇā trinayanamuditā khecarī śreṣṭhaśobhā |",
  "SA05n905:5": "prajvālī divyadehā gagaṇakṛtapadā dvibhujā muktakeśā",
  "SA05n905:6": "khaṭvāṅgaṃ vāmapāṇau dahinakaratikādhāriṇī svargarupā || 1 ||",
  "SA05n905:7": "nagnāṅgā grīvamālyā naraśirasahitā bhūṣaṇaṃ pañcamudrā",
  "SA05n905:8": "sattvānāṃ mārgamokṣā'nuttaravaradā jñānasiddhipradātā (trī) |",
  "SA05n905:9": "śrīdevī prāṇirakṣākṛtajagatahitā yoginī vajradīpti-",
  "SA05n905:10": "stvatpādau padmarūpau praṇamitaśirasā naumi vidyādharīśe || 2 ||",
  "SA05n905:11": "bhagavatī mahādevī bhavatyāḥ śaraṇaṃ vajre |",
  "SA05n905:12": "vande pādāmbuje nityaṃ bhajāmi tvāṃ prasīda me || 3 ||",
  "SA05n905:13": "jananī sarvabuddhānāṃ tvameva bodhidāyinī |",
  "SA05n905:14": "sarveṣāṃ bodhisattvānāṃ mātā hitānupālinī || 4 ||",
  "SA05n905:15": "sarvahitārthasaṃbhartrī sarvapāpaviśodhinī |",
  "SA05n905:16": "duṣṭamāragaṇān kṣobhya mahānandasukhapradā || 5 ||",
  "SA05n905:17": "saddharmasādhanotsāhe balavīryaguṇapradā |",
  "SA05n905:18": "niḥkleśastimitadhyānasamādhisukhadāyinī || 6 ||",
  "SA05n905:19": "prajñāguṇamahāratnaśrīsamṛddhipradāyinī |",
  "SA05n905:20": "bhagavatyāḥ padāmbhoje śaraṇastho bhajāmyaham || 7 ||",
  "SA05n905:21": "namāmi vajravārāhīṃ sarvapāpapramocanīm |",
  "SA05n905:22": "māravidhvaṃsinīṃ devīṃ buddhatvaphaladāyinīm || 8 ||",
  "SA05n905:23": "naumi śrīvajravārāhīṃ mantramūrtiṃ jineśvarīm |",
  "SA05n905:24": "atyantavaradāṃ devīṃ ṛddhisiddhivarapradām || 9 ||",
  "SA05n905:25": "vairocanakulodbhūtāṃ muktakeśīṃ trilocanām |",
  "SA05n905:26": "sandhyāsindūravarṇābhāṃ vande tvāṃ kuliśeśvarīm || 10 ||",
  "SA05n905:27": "pañcamudraśiraḥśobhāṃ skandhe khaṭvāṅgadhāriṇīm |",
  "SA05n905:28": "kare vajrakaroṭasthāṃ vande vajravilāsinīm || 11 ||",
  "SA05n905:29": "mudrāpañcadharāṃ dehe muṇḍamālāvibhūṣitām |",
  "SA05n905:30": "līlāhāsyamukhāmbhojāṃ vande trailokyasundarīm || 12 ||",
  "SA05n905:31": "bhairavādyāṃ trimukhīṃ ca vikrāntikaṇṭhacarcikām |",
  "SA05n905:32": "vidveṣaghanaghorāṃ ca vande bhīmabhayaṅkarīm || 13 ||",
  "SA05n905:33": "rāgavirāgayormadhye bhāvābhāvavikhaṇḍitām |",
  "SA05n905:34": "samudbhūtāṃ sadā devīṃ vande tāṃ jñānaḍākinīm || 14 ||",
  "SA05n905:35": "pañcāmṛtasurāpānapañcaśālisubhojinīm |",
  "SA05n905:36": "gītavādyaratāṃ nityaṃ vande tvāṃ suravanditām || 15 ||",
  "SA05n905:37": "sadaiva sahajānandāṃ nityabhūtāṃ sarvālayām |",
  "SA05n905:38": "raṇaccaraṇanūpuryāṃ vande nṛtyaparāyaṇām || 16 ||",
  "SA05n905:39": "tvāṃ devīṃ siddhidātrīṃ ca yogācārasadāratām |",
  "SA05n905:40": "buddhanirvāṇadātrīṃ tvāṃ vande buddhasya mātaram || 17 ||",
  "SA05n905:41": "raktāṅgīṃ vajravārāhīṃ divyarūpasvarūpiṇīm |",
  "SA05n905:42": "krāntimūrtidayādevīṃ namāmi vajrayoginīm || 18 ||",
  "SA05n905:43": "bandhūkapuṣpasaṅkāśāṃ śāntarūpāṃ jineśvarīm |",
  "SA05n905:44": "ṛddhisiddhipradāṃ devīṃ namāmi vajrayoginīm || 19 ||",
  "SA05n905:45": "dvādaśavarṣasampannāṃ navanṛtyasvarūpiṇīm |",
  "SA05n905:46": "trailokyavyāpinīṃ devīṃ namāmi vajrayoginīm || 20 ||",
  "SA05n905:47": "śrīnāgārjunapādācāryaviracitaṃ",
  "SA05n905:48": "vajradevīstotraṃ samāptam |"
}