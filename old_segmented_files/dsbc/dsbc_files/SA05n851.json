{
  "SA05n851:0": "mahākālastotram",
  "SA05n851:1": "namasyāmi mahākālaṃ sarvasampattidāyakam |",
  "SA05n851:2": "kharvaṃ lambodaraṃ nīlamaṣṭanāgavibhūṣitam || 1 ||",
  "SA05n851:3": "dvibhujaikamukhaṃ vīraṃ kapālakṛtaśekharam |",
  "SA05n851:4": "vyāghracarmakaṭīveṣṭaṃ śatārdhamuṇḍamālinam || 2 ||",
  "SA05n851:5": "bhāvābhāvaparicchinnaṃ jagatsaṃbodhakārakam |",
  "SA05n851:6": "sarvabhāvātmakaṃ nāthaṃ jagannātha namo'stu te || 3 ||",
  "SA05n851:7": "kṛṣṇavarṇaṃ mahātejaṃ siddhasādhakarakṣakam |",
  "SA05n851:8": "kartikapālinaṃ nāthaṃ mahākāla namo'stu te || 4 ||",
  "SA05n851:9": "vyāghracarmāmbaradharaṃ mahākrodhasvarūpiṇam |",
  "SA05n851:10": "dvādaśādityasaṃkāśaṃ mahākāla namo'stu te || 5 ||",
  "SA05n851:11": "mahādaṃṣṭrākarālāsyaṃ lalajjihvaṃ sabhairavam |",
  "SA05n851:12": "mahāraktābhanayanaṃ mahākāla namo'stu te || 6 ||",
  "SA05n851:13": "vibhrannaraśiromālāṃ nāgarājavibhūṣitam |",
  "SA05n851:14": "śmaśrutundilakaṃ vandyaṃ mahākāla namo'stu te || 7 ||",
  "SA05n851:15": "sabhrūbhaṅgaṃ trinetraṃ caivordhvapiṅgordhvakesaram |",
  "SA05n851:16": "yugāntānalapuñjābhaṃ mahākāla namo'stu te || 8 ||",
  "SA05n851:17": "trāsakaṃ sarvadaityānā(masthya)",
  "SA05n851:18": "sṛṅmāṃsabhakṣakam |",
  "SA05n851:19": "rakṣitāraṃ bhaktimatāṃ mahākāla namo'stu te || 9 ||",
  "SA05n851:20": "siddhisādhanamantrasya viheṭhījyanarāśanam |",
  "SA05n851:21": "yugmasyāśvāsadātāraṃ mahākāla namo'stu te || 10 ||",
  "SA05n851:22": "saṃsārajaladheḥ pāraṃ naukā yānaikagāminī |",
  "SA05n851:23": "naukāyāne svatejāstvaṃ mahākāla namo'stu te || 11 ||",
  "SA05n851:24": "mahākālastavaṃ caitad yaḥ paṭhed bhaktimān naraḥ |",
  "SA05n851:25": "bhayārto mucyate bhīteraricintā nivartate || 12 ||",
  "SA05n851:26": "mahākālaṃ namaskṛtya yathoktakulajanmataḥ |",
  "SA05n851:27": "tena sujanmā bhavati sarvasiddhiparāyaṇaḥ || 13 ||",
  "SA05n851:28": "śrīmahākālastotraṃ sampūrṇam |"
}