{
  "SA08n960:0": "bhikṣuṇā avalokitasiṃhena samudbhāvitaḥ",
  "SA08n960:1": "dharmasamuccayaḥ",
  "SA08n960:2": "prathamam udānam",
  "SA08n960:3": "(jita-dharma-kāyavargāḥ parivarto hyanityatā |",
  "SA08n960:4": "apramādaḥ kāma-tṛṣṇe strī ca madyena te daśa ||)",
  "SA08n960:5": "(1) jitavargaḥ",
  "SA08n960:6": "maṅgalācaraṇam",
  "SA08n960:7": " ||om namo buddhāya ||",
  "SA08n960:8": "prahīṇasarvāsrava nirmalaśrīryaḥ kleśajambālanimagnalokam |",
  "SA08n960:9": "kṛpāguṇenodaharatsamena praṇamyate'smai tribhavottamāya ||1 ||",
  "SA08n960:10": "granthakārapratijñā",
  "SA08n960:11": "saddharma smṛtyupasthānasūtra-vaipulyasāgarāt |",
  "SA08n960:12": "gāthāḥ samuddhariṣyāmi lokalocanatatparāḥ ||2 ||",
  "SA08n960:13": "mokṣasyāyatanāni ṣaṭ",
  "SA08n960:14": "apramādastathā śraddhā vīryārambhastathā dhṛtiḥ |",
  "SA08n960:15": "jñānābhyāsaḥ saṃtāśleṣo mokṣasyāyatanāni ṣaṭ ||3 ||",
  "SA08n960:16": "nava śāntisamprāptihetavaḥ",
  "SA08n960:17": "dānaṃ śīlaṃ damaḥ kṣāntirmaitrībhūteṣvahiṃsatā |",
  "SA08n960:18": "karuṇāmuditopekṣā śāntisamprāptihetavaḥ ||4 ||",
  "SA08n960:19": "narakasyāgrahetavaḥ",
  "SA08n960:20": "cāpalyaṃ pāpasaṃśleṣaḥ krūratā vitathaṃ vacaḥ |",
  "SA08n960:21": "mithyādṛṣṭiḥ pramādaśca narakasyāgrahetavaḥ ||5 ||",
  "SA08n960:22": "preteṣu ṣaṭ udbhavakāraṇāni",
  "SA08n960:23": "mātsaryamīrṣyā kaṭuvākyatā hi pramādasevā viratiḥ śubhācca |",
  "SA08n960:24": "tattveṣvabhidroharataṃ manaśca preteṣu panthāna ihodbhavanti ||6 ||",
  "SA08n960:25": "tiryagyonau udbhavasādhanāni",
  "SA08n960:26": "ajñānasevā jaḍa (tā)",
  "SA08n960:27": "ca buddheḥ saddharmanāśaḥ priyamaithunatvam |",
  "SA08n960:28": "āhāraśaktiḥ prabalā ca nidrā tiryaggatau ca pravadanti hetum ||7 ||",
  "SA08n960:29": "karmaphalam",
  "SA08n960:30": "aśubhaṃ trividhaṃ kṛtvā kāyavāṅmanasāṃ mahat |",
  "SA08n960:31": "uttarottarasambaddhaṃ karmaṇā sampradṛśyate ||8 ||",
  "SA08n960:32": "bālānāmapi sambaddhamuttarottarameva tat |",
  "SA08n960:33": "śubhañca trividhaṃ kṛtvā sādhavo yānti nirvṛtim ||9 ||",
  "SA08n960:34": "tasmāt karmaphalaṃ matvā pramādasya ca varjanam |",
  "SA08n960:35": "śreyase kriyate buddheretat sukhamanuttamam ||10 ||",
  "SA08n960:36": "dānaśīlavato nityaṃ sarvasattvānukampinaḥ |",
  "SA08n960:37": "siddhayanti sarvaśastulyāstasmācchīlaparo bhavet ||11 ||",
  "SA08n960:38": "kasya kāryasiddhiḥ bhavati?",
  "SA08n960:39": "maitrīkaruṇāyuktasya gatākāṃkṣasya dehinaḥ |",
  "SA08n960:40": "parānugrahayuktasya kāryasiddhirdhruvaṃ sthitā ||12 ||",
  "SA08n960:41": "santuṣṭasyāpramattasya sarvasattvahitaiṣiṇaḥ |",
  "SA08n960:42": "rāgadveṣavimuktasya kāryasiddhirdhruvaṃ sthitā ||13 ||",
  "SA08n960:43": "mitrāmitraprahīṇasya samacittasya dehinaḥ |",
  "SA08n960:44": "apāyagatibhinnasya kāryasiddhirdhruvaṃ sthitā ||14 ||",
  "SA08n960:45": "evaṃ ca tasya dhīrasya dharmadānaratasya ca |",
  "SA08n960:46": "mātsaryerṣyāpramuktasya kāryasiddhirdhruvaṃ sthitā ||15 ||",
  "SA08n960:47": "saṃvarasthasya śāntasya gurupūjāratasya ca |",
  "SA08n960:48": "kāryākāryavidhijñasya kāryasiddhirdhruvaṃ sthitā ||16 ||",
  "SA08n960:49": "aśaṭhasyātidakṣasya priyavākyasya nityaśaḥ |",
  "SA08n960:50": "dhyānādhyayanaśaktasya kāryasiddhirdhruvaṃ sthitā || 17 ||",
  "SA08n960:51": "deśakālavidhijñasya sādhyāsādhyaṃ vijānataḥ |",
  "SA08n960:52": "śakyopāyavidhijñasya kāryasiddhirdhruvaṃ sthitā ||18 ||",
  "SA08n960:53": "krodhādivijayasādhanamukhena dharmatāsvarūpanirūpaṇam",
  "SA08n960:54": "akrodhena hataḥ krodhaḥ kṣamayā krūratā jitā |",
  "SA08n960:55": "dharmeṇa nirjito'dharmaḥ prabhayā vijitaṃ tamaḥ ||19 ||",
  "SA08n960:56": "satyādeḥ praśaṃsā",
  "SA08n960:57": "mṛṣāvākyaṃ satyahataṃ paiśunyaṃ ca samādhinā |",
  "SA08n960:58": "pārūṣyaṃ mārdava jitaṃ abaddhaṃ bandhanā jitam ||20 ||",
  "SA08n960:59": "prāṇātipāto maitryā ca steyaṃ dānaiḥ sadā jitam |",
  "SA08n960:60": "ayoniśomanaskāro yonijena sadā jitaḥ || 21 ||",
  "SA08n960:61": "avidyā vidyayā jitā divasena tathā kṣapā |",
  "SA08n960:62": "śuklapakṣeṇa ca kṛṣṇapakṣo (hi)",
  "SA08n960:63": "sarvaśo jitaḥ ||22 ||",
  "SA08n960:64": "mithyākāmeṣvavijito buddhayā tattvavicārayā |",
  "SA08n960:65": "āryāṣṭāṅgena mārgeṇa yonijena sadā jitaḥ ||23 ||",
  "SA08n960:66": "vaiśāradyaiścaturbhiśca kadarya jitameva tat |",
  "SA08n960:67": "vismṛtiśca hatā smṛtyā kṣaṇenātmānameva ca ||24 ||",
  "SA08n960:68": "araṇyavāsaniyatairjitā rāgavaśā narāḥ |",
  "SA08n960:69": "meruṇā parvatā jitā (vṛkṣeṇa)",
  "SA08n960:70": "vanamālikā ||25 ||",
  "SA08n960:71": "samudreṇa jitā sarve tīrthā (hi)",
  "SA08n960:72": "jalasambhavāḥ |",
  "SA08n960:73": "ādityatejovijitā sarve ca grahatārakāḥ ||26 ||",
  "SA08n960:74": "nityā jitā anityena dāridrayaṃ dānasampadā |",
  "SA08n960:75": "śāṭhyaṃ na mārdava jitaṃ satyenānṛtiko hataḥ ||27 ||",
  "SA08n960:76": "bhūtena nirjito'bhūto vahninā tarusampadaḥ |",
  "SA08n960:77": "pipāsā vijitā toyairjighitsā bhojanaistathā ||28 ||",
  "SA08n960:78": "vīryapraśaṃsā",
  "SA08n960:79": "siṃhena vijitāḥ sarve mṛgāḥ sattvādhikāśca ye |",
  "SA08n960:80": "santāpena mahecchā ca jitā nityaṃ prakīrtyate || 29 ||",
  "SA08n960:81": "dayā praśasyate nityamadayā naiva śasyate |",
  "SA08n960:82": "vīryeṇa nirjitaṃ sarva kausīdyaṃ mohavardhanam ||30 ||",
  "SA08n960:83": "tattvadarśipuruṣapraśaṃsā",
  "SA08n960:84": "jñānādhikaiḥ sadā dāntaiḥ puruṣaistattvada(rśi)bhiḥ |",
  "SA08n960:85": "vijitāḥ krūrakarmāṇo mithyāvādādhikā narāḥ ||31 ||",
  "SA08n960:86": "buddhena nirjitāḥ sarve tīrthyāḥ kuṭilavādinaḥ |",
  "SA08n960:87": "asurā vijitā devairdharmateyaṃ vyavasthitā ||32 ||",
  "SA08n960:88": " ||iti jitavargaḥ prathamaḥ ||"
}