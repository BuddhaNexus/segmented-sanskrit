{
  "SA21n1397:0": "sidhdācāryaśrīśabarapādānām",
  "SA21n1397:1": "guhyavajravilāsinīsādhanam yoginīsarvasvam",
  "SA21n1397:2": "guhyavajravilāsinīsādhanam",
  "SA21n1397:3": "yoginīsarvasvam",
  "SA21n1397:4": "om namaḥ śrīvajravilāsinyai |",
  "SA21n1397:5": "yasmin surāsurasurendranarendravṛndā",
  "SA21n1397:6": "statpādapadmapatitā bhramarāḥ śirobhiḥ |",
  "SA21n1397:7": "taṃ sidhdisādhanapayodhimahānidhānaṃ",
  "SA21n1397:8": "śrīlokanāthacaraṇaṃ śaraṇaṃ vrajāmi ||1 ||",
  "SA21n1397:9": "yā śrīrvajravilāsinī bhagavatī sambhogabhaktyādbhutaṃ",
  "SA21n1397:10": "nityānandamahotsavaṃ vitanute nirvākapītaṃśukā |",
  "SA21n1397:11": "sattvānāṃ tathataiva vigrahavatī catīva rāgojjvalā",
  "SA21n1397:12": "tasyāḥ pādayugaṃ jagajjāyakaraṃ vande'bhivandyottamam ||2 ||",
  "SA21n1397:13": "na śrutaṃ na paṭhitaṃ kiñciccabareṇādricāriṇā |",
  "SA21n1397:14": "lokanāthādhipatyena vadeyaṃ kiyadakṣaram ||3 ||",
  "SA21n1397:15": "sarvarantamaye ramye gandhamṛgasugandhini |",
  "SA21n1397:16": "manobhaṅgapadaṃ dattvā cittaviśrāmaparvate ||4 ||",
  "SA21n1397:17": "tatpradeśe mahāramye sugandhikusumāśraye |",
  "SA21n1397:18": "lasatkandaramākandamandakūjitakokile ||5 ||",
  "SA21n1397:19": "raktāśokaghanodyāne mamāśokāṣṭamītithau |",
  "SA21n1397:20": "guruṇā karuṇāṅkena deśiteyaṃ vilāsinī ||6 ||",
  "SA21n1397:21": "yathāvidhi samācārairekacittasamādhinā |",
  "SA21n1397:22": "śabaryāṃ sahacaryāyāṃ mayā sā'bhimukhīkṛtā ||7 ||",
  "SA21n1397:23": "vaśyākarṣaṇastambhanamāraṇoccāṭānāni ca |",
  "SA21n1397:24": "añjanaṃ guṭikāsidhdistathānyāni bahūni ca ||8 ||",
  "SA21n1397:25": "mahāmudrāpadaṃ labdhvā vācā saṃyācitaṃ mayā |",
  "SA21n1397:26": "vidhinā bhāvayed yastvāṃ tasmai dāsyasi tatphalam ||9 ||",
  "SA21n1397:27": "bhagavatā yathoddiṣṭaṃ sādhanaṃ bhodhisādhanam |",
  "SA21n1397:28": "tasyāḥ saṃkṣepataḥ sāraṃ likhellabdhanimittakaḥ ||10 ||",
  "SA21n1397:29": "lobhakāyā mā diyuktānāṃ tīrthikānāṃ viśeṣataṃ |",
  "SA21n1397:30": "hiṃsābhiḥ krūracittānāṃ na deyaṃ sādhanottamam ||11 ||",
  "SA21n1397:31": "budhdatīrthikasattvānāmaparipācitacetasām |",
  "SA21n1397:32": "vigamadivyonmattānāṃ na deyaṃ sādhanottamam ||12 ||",
  "SA21n1397:33": "khañjakubjādighaṇṭā ṣaṇḍhā nāṃ vyādhiduḥkhitacetasām |",
  "SA21n1397:34": "eteṣāṃ naranārīṇāṃ na deyaṃ sādhanottamam ||13 ||",
  "SA21n1397:35": "labdhābhiṣekaśudhdāya bahujñāya kṛpālave |",
  "SA21n1397:36": "śāntakāntakṛtajñāya pradeyaṃ divyasādhanam ||14 ||",
  "SA21n1397:37": "gurvārādhanatuṣṭāya guhyaviśvāsarakṣiṇe |",
  "SA21n1397:38": "hīnodhdaraṇacittāya |",
  "SA21n1397:39": "pradeyaṃ divyasādhanam ||15 ||",
  "SA21n1397:40": "sattvārthahitayuktāya kāruṇyabodhikāṅkṣiṇe |",
  "SA21n1397:41": "naranārījanāyedaṃ pradeyaṃ divyasādhanam ||16 ||",
  "SA21n1397:42": "ādau sidhdividhiṃ jñātvā gurvārādhanapūrvakam |",
  "SA21n1397:43": "guruvākyāmṛtaistṛptastataḥ sādhanamārabhet ||17 ||",
  "SA21n1397:44": "parvatādiguhya madhye sugandhikusumāśraye |",
  "SA21n1397:45": "bhāvanīyā sakā ntena guhyavajravilāsinī ||18 ||",
  "SA21n1397:46": "śūnyaveśmani svaccandamudyāne vijane vane |",
  "SA21n1397:47": "pūjanīyā sadā devī sādhanīyā yathāvidhi ||19 ||",
  "SA21n1397:48": "ādāvudvartanaṃ kuryāt sugandhakusumādinā |",
  "SA21n1397:49": "kṣālayed guhyavajraṃ ca mantravidyāviśeṣataḥ ||20 ||",
  "SA21n1397:50": "netrayorañjanaṃ kāryaṃ keśaveśaṃ ca śobhanaṃ |",
  "SA21n1397:51": "vidyayā tacca kartavyaṃ nijalāvaṇyahetave ||21 ||",
  "SA21n1397:52": "padmapāṇitalaṃ kuryād bahumūlayugaṃ tatha |",
  "SA21n1397:53": "sukhasparśaṃ sadāmodi sukhasaubhāgyahetave ||22 ||",
  "SA21n1397:54": "pravālakāntamadharaṃ bhālaṃ sindūrarājitam |",
  "SA21n1397:55": "lalāṭe lākṣakārekhaṃ karṇaṃ vā'śokabhūṣitam ||23 ||",
  "SA21n1397:56": "tyaktvā'nyābharaṇānyeṣā muktāhārapralambinī |",
  "SA21n1397:57": "sādhako'pi varaṃ rūpaṃ padmanarteśvarasya ca ||24 ||",
  "SA21n1397:58": "kṛṣṭaṃ madanamāsadya sukhādyaṃ vidyayā saha |",
  "SA21n1397:59": "tāvanmātraṃ tu kartavyaṃ na mano vikalaṃ yathā ||25 ||",
  "SA21n1397:60": "dvayordvayoścaturdaśyāṃ tathāṣṭamyāṃ vidhānataḥ |",
  "SA21n1397:61": "rātrāvevārcayed devīṃ mase vāracatuṣṭayam ||26 ||",
  "SA21n1397:62": "pradīpaṃ jvālayet tatra prabhākarasamaprabham |",
  "SA21n1397:63": "yathā prakāśate viśvaṃ vimvaṃ pratyaṅgaṃ ca viśeṣataḥ ||27 ||",
  "SA21n1397:64": "sidhdayarthamupaviśyātha sattvārthākṛtacetaśā |",
  "SA21n1397:65": "mahāmudrāpadaṃ gantuṃ sarvabudhdasamāhitaḥ ||28 ||",
  "SA21n1397:66": "lajjādikaṃ parityajya kopalobhādikaṃ tathā |",
  "SA21n1397:67": "aṇumātrāṃ ghṛṇāṃ śaṅkāṃ dūrataḥ parivarjayet ||29 ||",
  "SA21n1397:68": "sukhāsana samā sīno vivāsā muktakuntalaḥ |",
  "SA21n1397:69": "svajaṅghāṃ ki ñcidākuñcya dakṣiṇāṅgulaṃ prasārayet ||30 ||",
  "SA21n1397:70": "tayormadhyagatāṃ vidyāṃ nivasanāṃ muktakuntalām |",
  "SA21n1397:71": "tathā lāvaṇyasampannāṃ kuryāt tu suparicitām ||31 ||",
  "SA21n1397:72": "madho dhye maculakaṃ dattvā tyaktapadmotkaṭāsanām |",
  "SA21n1397:73": "devībāhudvaya miva tasyā bāhudvayaṃ caret ||32 ||",
  "SA21n1397:74": "tasyā dharmodayāpanne kṛtvā vartulamaṇḍalam |",
  "SA21n1397:75": "vāmakarāmṛtāṅgulyā kuṅkumai raktacandanaiḥ ||33 ||",
  "SA21n1397:76": "tadanu dharmodayākāraṃ tatraiva maṇḍalaṃ caret |",
  "SA21n1397:77": "etanmaṇḍalamantraṃ tu mantrodhdāre'sti bhāṣitam ||34 ||",
  "SA21n1397:78": "etanmantraṃ samuccārya sītkāraṃ ca samuccaret |",
  "SA21n1397:79": "ādyakṣareṇa mantreṇa dadyat puṣpaṃ sumadhyake ||35 ||",
  "SA21n1397:80": "śūnyatāṃ bhāvayed yogī caturbramhavihāriṇaḥ |",
  "SA21n1397:81": "om śūnyatādikaṃ mantraṃ manasoccārayet tataḥ ||36 ||",
  "SA21n1397:82": "devyāḥ pañcākṣaraṃ mantraṃ pañcasthāneṣu vinyaset |",
  "SA21n1397:83": "śirovadanacitteṣu nābhau vajre tridhā kramam ||37 ||",
  "SA21n1397:84": "pañcasthāneṣu vidyāyā yathāropitamātmanaḥ |",
  "SA21n1397:85": "tathā mantrārcanaṃ kuryāddhitvā śūnyatādimantrakam ||38 ||",
  "SA21n1397:86": "athodayamahārāgaṃ bhāvayet sūryamaṇḍalam |",
  "SA21n1397:87": "vitataṃ sumanoramyaṃ raktākaraṃ samujjvalam ||39 ||",
  "SA21n1397:88": "tatra dharmodayāṃ dhyātvā raktādyakṣarasambhavām |",
  "SA21n1397:89": "manohlādakarīṃ pītāṃ kṣarallākṣādravojjvalām ||40 ||",
  "SA21n1397:90": "sarvakāmasukhadhārāṃ sphuradaṃśvabjavibhramām |",
  "SA21n1397:91": "dharmasambhoganirmāṇasarvākāravilakṣaṇam ||41 ||",
  "SA21n1397:92": "abhiṇayādayo raktaṃ jagaccadrārkamiśritam |",
  "SA21n1397:93": "bhagagarbhasthitaṃ paśyed bhramantaṃ cakrasannibham ||42 ||",
  "SA21n1397:94": "tasyopari mahābījaṃ taptākāñcanavigraham |",
  "SA21n1397:95": "pañcākṣaramahāmantraṃ jvalantaṃ kalpavahnivat ||43 ||",
  "SA21n1397:96": "raktaṃ cānalamālābhivryāpayantaṃ jagattrayam |",
  "SA21n1397:97": "vyaptākaniṣṭhalokābhiścintayed bimbaṃ vilakṣaṇam ||44 ||",
  "SA21n1397:98": "dravībhūtaṃ jagatsarvaṃ viśantaṃ tatra maṇḍale |",
  "SA21n1397:99": "draṣṭavyaṃ vaśagaṃ viśvaṃ satvānāṃ kṛtacetasām ||45 ||",
  "SA21n1397:100": "etatpariṇatāṃ devīṃ bandhūkakusumaprabhām |",
  "SA21n1397:101": "rakta tapta hemojjvalāṃ gaurīṃ nijalāvaṇyabhūṣitām ||46 ||",
  "SA21n1397:102": "navayauvanasampannāṃ karṇe cāśokaśobhitām |",
  "SA21n1397:103": "lalāṭe lākṣakārekhāṃ muktāhāravilambinīm ||47 ||",
  "SA21n1397:104": "sarvalakṣaṇasampūrṇāmanyālaṅkāravarjitām |",
  "SA21n1397:105": "abhivāñchitasaubhāgyāṃ nagnāṃ vimuktakuṇḍalām ||48 ||",
  "SA21n1397:106": "padmanarte dhvajocchrāyasamāropitapaṅkajām |",
  "SA21n1397:107": "utkaṭāsananṛtyasthāṃ kaṭākṣasmitabhaṅgurām ||49 ||",
  "SA21n1397:108": "vakrīkṛtoddhṛtabhujāṃ vajrakartikarodyatām |",
  "SA21n1397:109": "vāme pāśadharāsārāṃ līlāndolitamekhalām ||50 ||",
  "SA21n1397:110": "parirambhakarāhlādaiḥ padmanarteśvarātmikām |",
  "SA21n1397:111": "ullasadbhidurasparśaiḥ kṣaratkamalavibhramām ||51 ||",
  "SA21n1397:112": "nitambajaghanāsphālaraṇajjṛmbhitarājitām |",
  "SA21n1397:113": "sphuradākuñcayogena vaḍavāvaccamatkṛtām ||52 ||",
  "SA21n1397:114": "raktaraśmighaṭājālai rañjayantīṃ jagattrayam |",
  "SA21n1397:115": "tāmevāgrasthitāṃ vidyāṃ dhyāyād vajravilāsinīm ||53 ||",
  "SA21n1397:116": "ekadaiva samudbhūtaṃ samabījasukhāṅkuram |",
  "SA21n1397:117": "padmanarteśvaraṃ bījaṃ padmarāgarajobalam ||54 ||",
  "SA21n1397:118": "abhivyañjitaromāgraṃ sahajāsaktacetasam |",
  "SA21n1397:119": "sarvalakṣaṇasampūrṇaṃ dviraṣṭavarṣavigraham ||55 ||",
  "SA21n1397:120": "navayauvanasampannaṃ karṇe cāśokaśobhitam |",
  "SA21n1397:121": "suvarṇatilakārekhaṃ muktāhārāvalambitam ||56 ||",
  "SA21n1397:122": "nijalāvaṇyasampannamanyālaṅkāravarjitam |",
  "SA21n1397:123": "mahārāgarasādhāraṃ muktakeśaṃ digambaram ||57 ||",
  "SA21n1397:124": "vāmakuñcitayā kiñcidvitataṃ dakṣiṇāṅgayā |",
  "SA21n1397:125": "jaṅghayā suratācārya kiñciduttānaśāyinam ||58 ||",
  "SA21n1397:126": "svakuryā kucā pirtabāhubhyāṃ bhaktyāliṅganamudrakam |",
  "SA21n1397:127": "suvyaktaṃ guhyavajreṇa nartayantaṃ vilāsinīm ||59 ||",
  "SA21n1397:128": "pītapadmadharaṃ vāme dakṣiṇe vajradhāriṇam |",
  "SA21n1397:129": "āliṅgayantamācumbaṃ muhurābaddhalīlayā ||60 ||",
  "SA21n1397:130": "kurvantamatirāgeṇa surataṃ vājikūjitam |",
  "SA21n1397:131": "sahajānandasukhāsvādairardhonmīlitalocanam ||61 ||",
  "SA21n1397:132": "ityevaṃbhūtamātmānaṃ bhāvayet surateśvaram |",
  "SA21n1397:133": "mahāsukhamivāvyaktaṃ padmanarteśvaraṃ vibhum ||62 ||",
  "SA21n1397:134": "ato'syā mahādevyāstaptakāñcanaraśmibhiḥ |",
  "SA21n1397:135": "mithaḥ samarasībhūya trailokyaṃ sudhirāmbudhim ||63 ||",
  "SA21n1397:136": "tanmadhye sthitamātmānaṃ devyā saha vinodinam |",
  "SA21n1397:137": "mahārāgasukhāyātaṃ trailokyodaravartinam ||64 ||",
  "SA21n1397:138": "tadanu cintayet tūrṇamabhiṣiñcanti māṃ puraḥ |",
  "SA21n1397:139": "tathāgatā lokapālāḥ kinnarāsuramānavāḥ ||65 ||",
  "SA21n1397:140": "rambhā tilottamā caiva nānā cāpsarasogaṇāḥ |",
  "SA21n1397:141": "puṣpadhūpādibhirvādyairnānānṛtyamahotsavaiḥ ||66 ||",
  "SA21n1397:142": "atha maṇḍalapūjāṃ ca kārayet trayatogataḥ |",
  "SA21n1397:143": "kāyavākcittapūjābhistrayaṃ karma viśodhayet ||67 ||",
  "SA21n1397:144": "mūlamantraṃ samuccārya devyā nāma samuccaret |",
  "SA21n1397:145": "sa ityuccāraṇaṃ kṛtvā pūjayed guhyamaṇḍalam ||68 ||",
  "SA21n1397:146": "vāmavṛddhāmṛtābhyāṃ tu dhṛtvā puṣpaphalādikam |",
  "SA21n1397:147": "dātavyaṃ samarasaṃ sarva vāratrayamanāvilam ||69 ||",
  "SA21n1397:148": "svakāyaṃ kuliśaṃ tadvat saṃpūjya lalitotratam |",
  "SA21n1397:149": "tenaiva mantrajāpena devyā mantraṃ prapūjayet ||70 ||",
  "SA21n1397:150": "lalāṭaṃ locane kaṇṭhaṃ ghrāṇaṃ galadvayaṃ tathā |",
  "SA21n1397:151": "oṣṭhakaṇṭhau hṛdayaṃ ca stanau kakṣau vicakṣaṇaḥ ||71 ||",
  "SA21n1397:152": "nābhipadaṃ ca sampūjya vakāyaṃ cārpayet tathā |",
  "SA21n1397:153": "dhūpaṃ ca arayet tatra yathāvidhi sugandhitam ||72 ||",
  "SA21n1397:154": "bhagavatyāśca kartavyā padmanarteśvarasya ca |",
  "SA21n1397:155": "vajrapīṭhādipūjā''dau tenaiva kramayogataḥ ||73 ||",
  "SA21n1397:156": "tāmbūlaṃ ca pradātavyaṃ karpūrādisupūritam |",
  "SA21n1397:157": "anyonyaṃ bhakṣaṇaṃ kṛtvā gāthāpāṭhaṃ tataścaret ||74 ||",
  "SA21n1397:158": "mahāsukhaprasannastvamabhinno'si mayā saha |",
  "SA21n1397:159": "rantumāliṅganaṃ dehi narteśvara namo'stu te ||75 ||",
  "SA21n1397:160": "mahāsukhaprasannā tvamabhinnāsi mayā saha |",
  "SA21n1397:161": "rantumāliṅganaṃ dehi vilāsini namo'stu te ||76 ||",
  "SA21n1397:162": "iti gāthāṃ samuccārya sampuṭāñjalikarmaṇā |",
  "SA21n1397:163": "anyonyavandanāṃ kuryāt madhurākṣarabhāṣaṇaiḥ ||77 ||",
  "SA21n1397:164": "ekabījasamudbhūtaṃ prajñopāyamayaṃ jagat |",
  "SA21n1397:165": "sarvanārīmayī devī sarvopāyamayaḥ prabhuḥ ||78 ||",
  "SA21n1397:166": "abhinno'si mahārāja sahajārthaṃ samudyataḥ |",
  "SA21n1397:167": "ehi melāpakaṃ kartuṃ vajramudrāmaharddhikaḥ ||79 ||",
  "SA21n1397:168": "gāthādvayaṃ samuccārya cittasmaraṇapūrvakam |",
  "SA21n1397:169": "mitha āliṅganaṃ kuryānnavapuṣpiprayogataḥ ||80 ||",
  "SA21n1397:170": "āliṅganaṃ cumbanaṃ tu stanayormardanaṃ śanaiḥ |",
  "SA21n1397:171": "darśanaṃ sparśanaṃ yonervikāśaṃ liṅgagharṣaṇam ||81 ||",
  "SA21n1397:172": "praveśollāsanaṃ padme praveśastrayabhāgataḥ |",
  "SA21n1397:173": "maṇimadhyasamūlaiśca navapuṣi prakīrtitaḥ ||82 ||",
  "SA21n1397:174": "cumbanaṃ tu pradātavyaṃ yatra puṣpaiḥ supūjitam |",
  "SA21n1397:175": "mastakādipādaparyantaṃ viṃśatyaṅgasamaṃ gataū ||83 ||",
  "SA21n1397:176": "nakhakṣataṃ na dātavyaṃ paścāttāpanivṛttaye |",
  "SA21n1397:177": "karajacurcurāsparśaiḥ prīṇayed devīvigraham ||84 ||",
  "SA21n1397:178": "vaktrāsavaṃ ca pātavyaṃ vājikūjitapūrvakam |",
  "SA21n1397:179": "śunīdantārpaṇapātena tadvad daṃśanaṃ śanaiḥ ||85 ||",
  "SA21n1397:180": "kiñciduttānako bhūtvā sthātavyaṃ devamudrayā |",
  "SA21n1397:181": "ātmīyamudrayā devī bhidurāgreṇa nṛtyate ||86 ||",
  "SA21n1397:182": "niścalāttu sukhaṃ buddhayedati bā(cā)",
  "SA21n1397:183": "lanāccañcalaṃ manaḥ |",
  "SA21n1397:184": "helayā khelayā devīsahajāsaktacetasaḥ ||87 ||",
  "SA21n1397:185": "rāgāmbhodhijalaṃ tartuṃ sunā(nau)",
  "SA21n1397:186": "keyamupasthitā |",
  "SA21n1397:187": "guruvākyodayaṃ prāptaṃ vāhayed vāhakasvaraiḥ ||88 ||",
  "SA21n1397:188": "matvā sthānatrayaṃ marmagrāhotsargagatāgatam |",
  "SA21n1397:189": "svasvarente iyamāyuprpataṃ gileta khamamakṣara (?) ||89 ||",
  "SA21n1397:190": "manthānasthānaṃ tu boddhavyaṃ vilakṣaṇakṣaṇoditam |",
  "SA21n1397:191": "vajreṇa kṣobhayed devīṃ bodhicittaṃ na cotsṛjet ||90 ||",
  "SA21n1397:192": "utsṛte bodhicitte tu kutastatra mahāsukham |",
  "SA21n1397:193": "manthayet kamalāmbhodhisahajāmṛtakāṅkṣayā ||91 ||",
  "SA21n1397:194": "vairāgyakālakūṭaṃ ca nottiṣṭati yathā yathā |",
  "SA21n1397:195": "yathoktabhāvanāpūrvaṃ devadevyā rasāśmi (tma) kam ||92 ||",
  "SA21n1397:196": "tāṃ bhāvanāṃ bhāvayed dhīmāṃstrailokyakāriṇīm |",
  "SA21n1397:197": "manthamanthānayogena niḥsṛtaṃ kimapi gā(go)lakam ||93 ||",
  "SA21n1397:198": "prokṣaṇaṃ tena kurvīta bījoccāraṇapūrvakam |",
  "SA21n1397:199": "ye ye (tattam)",
  "SA21n1397:200": "madyādidravyeṣu prakṣipet kamalagolakam ||94 ||",
  "SA21n1397:201": "tatsantarpaṇanātreṇa devadevyau pratuṣyataḥ |",
  "SA21n1397:202": "kamalamadhyagataṃ vajraṃ kicidākuñcya pāṇinā ||95 ||",
  "SA21n1397:203": "stabdhamullālayenmantrī devītuṣṭiḥ prajāyate |",
  "SA21n1397:204": "karavṛddhāṅgulibhyāṃ ca padmapakṣadvayaṃ śanaiḥ ||96 ||",
  "SA21n1397:205": "ghaṭitāddha(todghā)",
  "SA21n1397:206": "ṭitaṃ kuryāt spharataśca yathātatham |",
  "SA21n1397:207": "kuryādāndolanāhlādamākuñcayecca paṅkajam ||97 ||",
  "SA21n1397:208": "kuñcinnṛtyaprabhaṅgaiśca [sa]kaṭākṣasmitaiḥ karaiḥ |",
  "SA21n1397:209": "yugayostu prabhājālaistrailokyavyāpimaṇḍale ||98 ||",
  "SA21n1397:210": "krīḍamānaṃ vilāsinyā bhāvayedātmavigraham |",
  "SA21n1397:211": "gandharvanagarākāraṃ mṛgatṛṣṇāmbucañcalam ||99 ||",
  "SA21n1397:212": "tatheti bhāvamābhyāsaṃ sadā kuryādvicakṣaṇaḥ |",
  "SA21n1397:213": "bhāvanākhinnayogastu jape[cca] vāmapāṇinā ||100 ||",
  "SA21n1397:214": "pañcākṣaraṃ mahāvījaṃ sarvabuddhairnamaskṛtam |",
  "SA21n1397:215": "saptajanmakṛtodbhūtaṃ mahākilbiṣanāśanam ||101 ||",
  "SA21n1397:216": "devīpadmasthitaṃ mantraṃ jvalantaṃ raktaṣaṭpadam |",
  "SA21n1397:217": "svanābhidūraṃ(bheruraḥ)",
  "SA21n1397:218": "praviśyādau ghrāṇarandhreṇa niḥsṛtam ||102 ||",
  "SA21n1397:219": "devīghrāṇapuṭaṃ caiva praviśya kamalavatrmanā |",
  "SA21n1397:220": "punarvajre samāyātaṃ paśyedhāyātayātakam ||103 ||",
  "SA21n1397:221": "dolājāpo'yamityāhuḥ kṣiprasiddhikaro yataḥ |",
  "SA21n1397:222": "etadyogavarāpeto na siddho bhavati mudrayā ||104 ||",
  "SA21n1397:223": "ekadaivaṃ samuccārya vidyayā saha susvaram |",
  "SA21n1397:224": "nādabindulayātītamidaṃ jāpasya lakṣaṇam ||105 ||",
  "SA21n1397:225": "śatamaṣṭottaraṃ japtvā kuryādanyonyabhūṣaṇam |",
  "SA21n1397:226": "vajrābjayoḥ samaṃ tatra muhurgaruḍamudrayā ||106 ||",
  "SA21n1397:227": "daśadhāndolanaṃ devān dadyādāhlādacetasā |",
  "SA21n1397:228": "punastenaiva yogena jāpamārabhate sudhīḥ ||107 ||",
  "SA21n1397:229": "ityanena krameṇaiva sujapyo'yaṃ yathāvidhi |",
  "SA21n1397:230": "jāpaḥ pañcaśataṃ yāvat samaye tatra mantriṇā ||108 ||",
  "SA21n1397:231": "etajjāpāvasāne tu bhāvayedātmamelakam |",
  "SA21n1397:232": "bodhāmbhodhiṃ praveśyāmuttaraphalahetave ||109 ||",
  "SA21n1397:233": "yuganaddhamahārāgodbhūtāpannaṃ saprajñakam |",
  "SA21n1397:234": "taptasvarṇadravākāraṃ jagat samarasojjvalam ||110 ||",
  "SA21n1397:235": "dakṣiṇāvartarūpeṇa bhramantaṃ cakrasannibham |",
  "SA21n1397:236": "cedayantaṃ jagatkleśaṃ trailokyasyāpi maṇḍalam ||111 ||",
  "SA21n1397:237": "aśeṣaviṣayakakṣād vāsanāmūlabṛṃhitāt |",
  "SA21n1397:238": "api bhasmāṇudagdhā[cca] śāntimeti dravānilaḥ ||112 ||",
  "SA21n1397:239": "śakracāpakrameṇaiva tallīnaṃ gaganāmbudhau |",
  "SA21n1397:240": "gaganaṃ sahaje līnaṃ bodhāmbhodhau mahodaye ||113 ||",
  "SA21n1397:241": "avidyāvāsanābhyāsādavidyaiva prahīyate |",
  "SA21n1397:242": "ataḥ pratītyajā bhāvāḥ svaprajātamahopamāḥ ||114 ||",
  "SA21n1397:243": "utpādasthitināśastu vikalpāt kila jāyate |",
  "SA21n1397:244": "tadādau kalpanā nāsti tasmad bodhaḥ prakāśate ||115 ||",
  "SA21n1397:245": "bhāvābhāvo(vau)",
  "SA21n1397:246": "nija(je)",
  "SA21n1397:247": "līna(nau)",
  "SA21n1397:248": "paramārthādibodhataḥ |",
  "SA21n1397:249": "yathāvattā paraṃ nāsti satyāsatyavivarjitā ||116 ||",
  "SA21n1397:250": "ityevaṃ hi samādhisthaḥ samyagabhyāsaniścalaḥ |",
  "SA21n1397:251": "tadā yogī bhavet siddho mahāmudrāmaharddhikaḥ ||117 ||",
  "SA21n1397:252": "vidyotpanne'śanau pīṭhe kartavyaṃ maṇḍalādikam |",
  "SA21n1397:253": "vajrapīṭhodbhavo deva ātmanā ca vilāsinī ||118 ||",
  "SA21n1397:254": "tayośca pūrvavat sarvaṃ dhyānajāpādikaṃ tathā |",
  "SA21n1397:255": "kartavyaṃ vidhinā yogaṃ prāpyāccaiva yathoditam ||119 ||",
  "SA21n1397:256": "atha yathā vihartavyaṃ samādhityaktacetasā |",
  "SA21n1397:257": "svayaṃ narteśvaraṃ dhyātvā vidyayā ca vilāsinīm ||120 ||",
  "SA21n1397:258": "nityaṃ ca pūjayenmantrī rātreryāme caturthake |",
  "SA21n1397:259": "pūrvavadvidhinā mantraṃ śatamaṣṭottaraṃ japet ||121 ||",
  "SA21n1397:260": "vidyāyāḥ sarvathā bhāvaḥ svasyaiva vajrapīṭhake |",
  "SA21n1397:261": "pūrvavanmaṇḍalaṃ kṛtvā nityapūjāvidhiṃ caret ||122 ||",
  "SA21n1397:262": "mudrāpi pūrvavat sarvaṃ sūryadharmodayādikam |",
  "SA21n1397:263": "melakaṃ tādṛśā(śaṃ)",
  "SA21n1397:264": "devyā dhyāyan mantrī ratotsavam ||123 ||",
  "SA21n1397:265": "vajraṃ kareṇa saṃgṛhya lālayenmahāmaṇḍayogataḥ |",
  "SA21n1397:266": "mantrajāpādikaṃ tadvad bodhicittaṃ na cotsṛjet ||124 ||",
  "SA21n1397:267": "upāyamelakaṃ bhāve vidyāpi svābjamaṇḍale |",
  "SA21n1397:268": "pūrvavanmaṇḍalaṃ kṛtvā nityapūjāvidhiṃ caret ||125 ||",
  "SA21n1397:269": "tarjanyaṅguṣṭhāṅgulibhyāmekīkṛtya suyugmakam |",
  "SA21n1397:270": "tadvajrābjaniyogena jāpadhyānādikaṃ caret ||126 ||",
  "SA21n1397:271": "ya(ta)dā [ca] suratācāryaścaturyoniṃ caturbhujām |",
  "SA21n1397:272": "caturāndolanaṃ divyaṃ caturmudrāviśeṣakam ||127 ||",
  "SA21n1397:273": "gopanīyaṃ yathācalaṃ(cāraṃ)",
  "SA21n1397:274": "mayā tu khalu taskarāt |",
  "SA21n1397:275": "sphuṭākṣarapadaireva bījamantro na likhitaḥ ||128 ||",
  "SA21n1397:276": "āvādidaśānto'yaṃ līkāro anumastakaḥ |",
  "SA21n1397:277": "jhānto vahati rīkāraṃ rukāraṃ vaśca līya(pa)raḥ ||129 ||",
  "SA21n1397:278": "eṣa pañcākṣaro mantra indubinduvibhūṣitaḥ |",
  "SA21n1397:279": "e ā rī ra brī |",
  "SA21n1397:280": "iti mantraḥ sarvakāmaphalado jāpyo yathāvidhi ||130 ||",
  "SA21n1397:281": "mantrarājasya sāmarthyaṃ pratyakṣaṃ vā bhaviṣyati |",
  "SA21n1397:282": "sarvasiddhimahādhenorvatsalo hyativatsalaḥ ||131 ||",
  "SA21n1397:283": "rate surate nityaklinne madadrave sukhena sukhayone subale vihvale",
  "SA21n1397:284": "liṅgavajraṃ grasa grasa ha ha ha a a a mama sarvasattvānāṃ",
  "SA21n1397:285": "sarvasiddhiṃ dehi dehi saḥ ||132 ||",
  "SA21n1397:286": "tataḥ prathamākṣaraṃ dattvā suratāntaṃ samuccaret |",
  "SA21n1397:287": "dvitīyākṣaramādāya dravāntaṃ ca samuccaret ||133 ||",
  "SA21n1397:288": "tṛtīyākṣaramudgīrya sukhayonyantaṃ subhaṇyate |",
  "SA21n1397:289": "caturthākṣaramādāya vihvalāntaṃ pragīyate |",
  "SA21n1397:290": "pañcamaṃ ca samuccārya liṅgavajrādikaṃ paṭhet ||134 ||",
  "SA21n1397:291": "rate surate e nityaklinne madadrave vīṃ sukhena sukhayoe rī subale",
  "SA21n1397:292": "vihvale ra liṅgavajraṃ brī grasa grasa ha ha ha a a a mama sarvasattvānāṃ sarvasiddhiṃ dehi dehi saḥ ||135 ||",
  "SA21n1397:293": "mantro'yaṃ validāne'pi paṭhayate |",
  "SA21n1397:294": "niraṃśumālikā śreṣṭhā mañjiṣṭhādisurañjitā |",
  "SA21n1397:295": "pravālamalikā putrajīvinā grathitā tathā ||136 ||",
  "SA21n1397:296": "raktacandanavṛkṣasya phalairvā racitā priyā |",
  "SA21n1397:297": "śatamaṣṭottaraṃ kṛtvā racenmālikāṃ vidhānataḥ ||137 ||",
  "SA21n1397:298": "[ayaṃ] yogavareṇyasya yogīndrasya tathā striyaḥ |",
  "SA21n1397:299": "karaṇīyaḥ sadācāro jñeyaḥ siddhavidhau sthitaḥ ||138 ||",
  "SA21n1397:300": "sa(sva)kaṃ śaṅkenna vā bhāvaṃ kartavyo dica (kartavyaṃ divya)",
  "SA21n1397:301": "lakṣaṇam | sarvasiddhividhau jñeyaṃ sarvajñena yathoditam ||139 ||",
  "SA21n1397:302": "śvāsalābho bhavenmāse ṣaṇmāse vāñcitaṃ phalam |",
  "SA21n1397:303": "rṛddhisiddhirbhavedabde vaśyākṛṣṭipuraḥsarā ||140 ||",
  "SA21n1397:304": "kiṅkarībhūya sevante sadevāsuramanuṣāḥ |",
  "SA21n1397:305": "urvaśyādimukhāḥ sarve matryasthānāṃ tu kā kathā ||141 ||",
  "SA21n1397:306": "sadā'bhyāsarataiḥ samyak pūrṇe dvādaśavatsare |",
  "SA21n1397:307": "mahāmudrāpadārūḍhaḥ siddho bhavati sādhakaḥ ||142 ||",
  "SA21n1397:308": "smṛtvā yathoditaṃ pūrvamabhyaset tadanantaram |",
  "SA21n1397:309": "ayathākṛta ārambho devīkṣobhaḥ patiṣyati ||143 ||",
  "SA21n1397:310": "adhigamyāgamāt sarvamagamad rāgasaṃkaṭam |",
  "SA21n1397:311": "gurupādaṃ vinā vatsa mā gacca yoginīnayam ||144 ||",
  "SA21n1397:312": "yadi candrastathā sūryo bhūmau patati śīryate |",
  "SA21n1397:313": "tathāpi lokanāthasya nedaṃ vaco mṛṣā bhavet ||145 ||",
  "SA21n1397:314": "guhyodbhūtanaro dharmaḥ sarvasiddhinidhānakaḥ |",
  "SA21n1397:315": "karuṇākaranāthena kṛpayā deśito mama ||146 ||",
  "SA21n1397:316": "yathaiva mattamātaṅgo gurubhirjālakādibhiḥ |",
  "SA21n1397:317": "pravaśīkriyate vijñairvijñānaṃ ca mahodayaiḥ ||147 ||",
  "SA21n1397:318": "yathā mahauṣadhaṃ kiñcit susvādaṃ vyādhighātakam |",
  "SA21n1397:319": "prajñopāyasukhaṃ tadvaddhelayā kleśanāśanam ||148 ||",
  "SA21n1397:320": "sarvasya ramaṇī ramyā rāgiṇāṃ śuddharāgiṇām |",
  "SA21n1397:321": "ekasya galapāśaḥ syādaparasya bandhakartikā ||149 ||",
  "SA21n1397:322": "aho upāyasāmarthyaṃ mahāyānānuyāyinām |",
  "SA21n1397:323": "kāminīṃ ghāḍhamāliṅgaya bhuñjanti makaradhvajam ||150 ||",
  "SA21n1397:324": "rasāśa(rasa)",
  "SA21n1397:325": "syāṃśo vyādhirvividhaghanakāmaikaphaladaḥ",
  "SA21n1397:326": "sadā sattvārāmā ramaṇasahajānandamuditā |",
  "SA21n1397:327": "tad(to) bhūyo bhūyo bhuvanasukhasantuṣṭamanaso",
  "SA21n1397:328": "vinākleśāpāśo(yāsaṃ)",
  "SA21n1397:329": "jagadakhilamāproti tathatām ||151 ||",
  "SA21n1397:330": "iti guhyasamayatantre mahāyoginījālatantre śrīmallokanāthapādena deśitaṃ",
  "SA21n1397:331": "yoginīsarvasvaṃ nāma guhyavajravilāsinīsādhanaṃ samāptam ||",
  "SA21n1397:332": "kṛtiriyaṃ siddhācāryaśabarapādānām ||"
}