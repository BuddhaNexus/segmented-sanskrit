{
  "SA21n2906:3": "Mantroddhāra",
  "SA21n2906:10": "namo buddhāya ||",
  "SA21n2906:17": "śrīguhyasamājamahāyogatantrasya",
  "SA21n2906:18": "sādhanopāyikānupūrvīṃ darśayannāha-",
  "SA21n2906:25": "mantrāvadhāraṇaṃ pūrvaṃ dvītīyā nyāsadeśanā |",
  "SA21n2906:29": "vyavastholistṛtīyā ca caturthaṃ",
  "SA21n2906:30": "tattvadarśanam ||",
  "SA21n2906:36": "iti |",
  "SA21n2906:37": "asya sūtrasyāyamarthaḥ - prathamaṃ",
  "SA21n2906:38": "tāvadaśeṣamantrapadaṃ sādhanā-",
  "SA21n2906:42": "ṅgāduddhṛtya cetasyevāvaropyāvadhārayediti",
  "SA21n2906:43": "mantrāvadhāraṇaṃ pūrvam | tataḥ",
  "SA21n2906:47": "skandhadhātvāyatanādiṣu vairocanādyākāreṇa",
  "SA21n2906:48": "svakāyamaṇḍale nyasediti",
  "SA21n2906:52": "dvitīyā nyāsadeśanā |",
  "SA21n2906:53": "vinyastadevatānāmekaikasyānupūrveṇa svalakṣaṇaṃ",
  "SA21n2906:57": "parijñāya nirūpitaṃ devatācakramiti vyavastholistṛtīyā |",
  "SA21n2906:61": "sūkṣmayogenaikīkṛtya",
  "SA21n2906:62": "praveśasthitivyutthānairmantrānnyasediti caturthaṃ tattva-",
  "SA21n2906:66": "darśanam ||",
  "SA21n2906:73": "idānīṃ mantrāvadhāraṇamantro likhyate- vajraghṛk |",
  "SA21n2906:74": "hūṃ | oṃ sumbha",
  "SA21n2906:78": "nisumbha hūṃ gṛhṇa gṛhṇa hūṃ gṛhṇāpaya gṛhṇāpaya",
  "SA21n2906:79": "hūṃ ānaya ho bhagavan vidyārāja ( 1 )",
  "SA21n2906:92": "hūṃ phaṭ |",
  "SA21n2906:93": "oṃ gha 4 ghātaya ghātaya sarvaduṣṭān",
  "SA21n2906:94": "phaṭ 2 kīlaya 2 sarva-",
  "SA21n2906:98": "pāpān phaṭ 2 hūṃ 2 vajrakīla vajradharo",
  "SA21n2906:99": "ājñāpayati sarva vighnānāṃ kāya-",
  "SA21n2906:103": "vākcittavajraṃ kīlaya 2 hūṃ 2 phaṭ 2 | ṭakki hūṃ",
  "SA21n2906:104": "jaḥ | hūṃ | bhrūṃ | oṃ āḥ",
  "SA21n2906:107": "hūṃ |",
  "SA21n2906:108": "anena rakṣācakrālambanam ||",
  "SA21n2906:115": "abhāve bhāvanā'bhāvo bhāvanā naiva bhāvanā |",
  "SA21n2906:119": "iti bhāvo na bhāvaḥ syādbhāvanā nopalabhyate ||",
  "SA21n2906:126": "niḥsvabhāvālambanam ||",
  "SA21n2906:133": "hūṃ yaṃ hūṃ |",
  "SA21n2906:134": "hūṃ raṃ hūṃ |",
  "SA21n2906:135": "hūṃ vaṃ hūṃ | hūṃ laṃ",
  "SA21n2906:136": "hūṃ | caturmaṇḍalaniṣpādanam ||",
  "SA21n2906:139": "bhrūṃ |",
  "SA21n2906:140": "kūṭāgāraniṣpādanam ||",
  "SA21n2906:147": "oṃ śūnyatājñānavajrasvabhāvātmako'ham |",
  "SA21n2906:148": "paramārthamaṇḍalapraveśaḥ ||",
  "SA21n2906:152": "sūryacadrapadmaṃ ca tryakṣaravālaṃ ca | paryante",
  "SA21n2906:153": "candramaṇḍalālambanam ||",
  "SA21n2906:157": "oṃ dharmadhātusvabhāvātmako'ham |",
  "SA21n2906:158": "dṛḍhīkaraṇam |",
  "SA21n2906:159": "iti yogaḥ ||",
  "SA21n2906:163": "oṃ āḥ hūṃ |",
  "SA21n2906:164": "mahāvajradharaniṣpādanam | anuyogaḥ ||",
  "SA21n2906:168": "oṃ āḥ hūṃ svāṃ hāa |",
  "SA21n2906:169": "pañcaskandhānupraveśaḥ ||",
  "SA21n2906:173": "moharati dveṣarati rāgarati vajrarati |",
  "SA21n2906:174": "dhātvanupraveśaḥ ||",
  "SA21n2906:178": "thlīṃ oṃ oṃ oṃ hūṃ oṃ saṃ maiṃ |",
  "SA21n2906:179": "cakṣurādyāyatanānupraveśaḥ || ( 2 )",
  "SA21n2906:191": "hūṃ |",
  "SA21n2906:192": "yamāntaka-prajñāntaka-padmāntaka-amṛtakuṇḍali-acala-ṭakkirāja-",
  "SA21n2906:196": "nīladaṇḍa-mahābala-uṣṇīṣacakravarti-nisumbharājaśceti",
  "SA21n2906:197": "svakāyamaṇḍala-",
  "SA21n2906:201": "niṣpāditasvabhāvālambanaṃ ceti | atiyogaḥ || oṃ |",
  "SA21n2906:208": "anena locanāvyūhaspharaṇaṃ ||",
  "SA21n2906:215": "buddhakāyadharaḥ śrīmāṃstrivajrābhedyabhāvitaḥ |",
  "SA21n2906:219": "adhiṣṭhānapadaṃ me'dya karotu kāyavajriṇaḥ ||",
  "SA21n2906:226": "daśadiksaṃsthitāa buddhāstrivajrābhedyabhāvitāḥ |",
  "SA21n2906:230": "adhiṣṭhānapadaṃ me'dya kurvantu kāyavajriṇaḥ ||",
  "SA21n2906:237": "anena prārthanā ||",
  "SA21n2906:244": "yatkāyaṃ sarvabuddhānāṃ pañcaskandhaprapūritam |",
  "SA21n2906:248": "buddhakāyasvabhāvena mamāpi tādṛśaṃ bhavet ||",
  "SA21n2906:255": "oṃ sarvatathāgatakāyavajrasvabhāvātmako'ham |",
  "SA21n2906:256": "anena kāyavajrādhi-",
  "SA21n2906:260": "ṣṭhānam || āḥ |",
  "SA21n2906:264": "pāṇḍaravādinīvyūhaspharaṇam || ( 3 )",
  "SA21n2906:277": "dharmo vai vākpathaḥ śrīmāṃstrivajrābhedyabhāvitaḥ |",
  "SA21n2906:281": "adhiṣṭhānapadaṃ me'dya karotu vāgvajriṇaḥ ||",
  "SA21n2906:288": "daśadiksaṃsthitā buddhāstrivajrābhedyabhāvitāḥ |",
  "SA21n2906:292": "adhiṣṭhānapadaṃ me'dya kurvantu vāgvajriṇaḥ ||",
  "SA21n2906:299": "anena prārthanā ||",
  "SA21n2906:306": "yedeva vajradharmasya vācā niruktisampadā |",
  "SA21n2906:310": "mamāpi tādṛśī vācā bhaveddharmadharopamā ||",
  "SA21n2906:317": "oṃ sarvatathāgatavāgvajrasvabhāvātmako'ham |",
  "SA21n2906:318": "anena vāgvajrāhaṅkāraṃ",
  "SA21n2906:322": "kuryāditi vāgvajrādhiṣṭhānam ||",
  "SA21n2906:328": "hūṃ |",
  "SA21n2906:329": "māmakīvyūhaspharaṇam ||",
  "SA21n2906:336": "cittavajradharaḥ śrīmāṃstrivajrābhedyabhāvitaḥ |",
  "SA21n2906:340": "adhiṣṭhānapadaṃ me'dya karotu cittavajriṇaḥ ||",
  "SA21n2906:347": "daśadiksaṃsthitā buddhāstrivajrābhedyabhāvitāḥ |",
  "SA21n2906:351": "adhiṣṭhānapadaṃ me'dya kurvantu cittavajriṇaḥ ||",
  "SA21n2906:358": "anena prārthanā || ( 4 )",
  "SA21n2906:371": "yaccittaṃ samantabhadrasya guhyakendrasya",
  "SA21n2906:372": "dhīmataḥ |",
  "SA21n2906:376": "mamāpi tādṛśaṃ cittaṃ bhavedvajradharopamam ||",
  "SA21n2906:383": "oṃ sarvatathāgatacittavajrasvabhāvātmako'ham |",
  "SA21n2906:384": "anena cittavajrāhaṅkāraṃ",
  "SA21n2906:388": "kuryāditi cittavajrādhiṣṭhānam || oṃ",
  "SA21n2906:395": "sarvatathāgatakāyavākcittavajrasvabhāvātmako'ham |",
  "SA21n2906:396": "anena mahāvajra-",
  "SA21n2906:400": "dharāhaṅkāraṃ kuryāditi ||",
  "SA21n2906:406": "hūṃ |",
  "SA21n2906:407": "anena samādhisatvālambanam ||",
  "SA21n2906:414": "evaṃ trisatvātmakaṃ mahāvajradharamātmānaṃ niṣpādya",
  "SA21n2906:415": "devatīsaṃskāraṃ kuryāt |",
  "SA21n2906:419": "anena krameṇa- oṃ āḥ hūṃ svā hā |",
  "SA21n2906:420": "locanā māmakī",
  "SA21n2906:421": "pāṇḍaravāsinī",
  "SA21n2906:425": "samayatārā |",
  "SA21n2906:426": "rūpavajrā śabdavajrā gandhavajrā",
  "SA21n2906:427": "rasavajrā sparśavajrā | vajra-",
  "SA21n2906:431": "vetālī aparājitā bhṛkuṭī viśvavajrī viśvaratnī",
  "SA21n2906:432": "viśvapadmī viśvakarmī",
  "SA21n2906:436": "gaganavajriṇī dharaṇīṃdharī ceti prākṛtastrībhāvāpanayanam ||",
  "SA21n2906:442": "oṃ hūṃ |",
  "SA21n2906:443": "vajrasaṃskāraḥ || āḥ |",
  "SA21n2906:447": "padmasaṃskāraḥ ||",
  "SA21n2906:454": "oṃ sarvatathāgatānurāgaṇavajrasvabhāvātmako'ham |",
  "SA21n2906:455": "ratnasambhavādhi-",
  "SA21n2906:459": "ṣṭhānam ||",
  "SA21n2906:463": "hūṃ | cālanaṃ || ( 5 )",
  "SA21n2906:476": "phaṭ | utsargaḥ ||",
  "SA21n2906:483": "oṃ sarvatathāgatapūjāvajrasvabhāvātmako'ham |",
  "SA21n2906:484": "amoghasiddhyadhiṣṭhānam ||",
  "SA21n2906:491": "utsargamaṇḍalasya mantrapadāni bhavanti-",
  "SA21n2906:492": "vajradhṛk jinajik ratnadhṛk",
  "SA21n2906:496": "ārolik prajñādhṛk moharati dveṣarati rāgarati",
  "SA21n2906:500": "vajrarati rūpavajrā śabdavajrā gandhavajrā",
  "SA21n2906:501": "rasavajrā sparśavajrā maitreyaḥ",
  "SA21n2906:505": "kṣitigarbhaḥ vajrapāṇiḥ khagarbhaḥ lokeśvaraḥ",
  "SA21n2906:506": "mañjuśrīḥ",
  "SA21n2906:510": "sarvanivaraṇaviṣkambhī samantabhadraḥ yamāntakṛt",
  "SA21n2906:511": "prajñāntakṛt padmā-",
  "SA21n2906:515": "ntakṛt vighnāntakṛt acalaḥ ṭakkirājaḥ nīladaṇḍaḥ",
  "SA21n2906:516": "mahābalaḥ",
  "SA21n2906:520": "uṣṇīṣacakravartī sumbharājaścetyutsargamaṇḍalam ||",
  "SA21n2906:527": "sukṣmayogaḥ ||",
  "SA21n2906:534": "oṃ āḥ hūṃ | vāgjāpaḥ ||",
  "SA21n2906:541": "tvaṃ vajracitta bhuvaneśvara sattvadhāto",
  "SA21n2906:545": "trāyāhi māṃ ratimanojña mahārthakāmaiḥ |",
  "SA21n2906:549": "kāmāhi māṃ janaka sattvamahāgrabandho",
  "SA21n2906:553": "yadīcchase jīvitumadya nātha ||",
  "SA21n2906:560": "tvaṃ vajrakāya bahusattvapriyāṅkacakra",
  "SA21n2906:564": "buddhārtha bodhiparamārthaṃ hitānudarśī | ( 6 )",
  "SA21n2906:577": "rāgeṇa rāgasamayāṃ mama kāmayasva",
  "SA21n2906:581": "yadīcchase jīvitumadya nātha ||",
  "SA21n2906:588": "tvaṃ vajravāca sakalasya hitānukampī",
  "SA21n2906:592": "lookārthakāryakaraṇe sada sampravṛttaḥ |",
  "SA21n2906:596": "kāmāhi māṃ suratacarya samantabhadra",
  "SA21n2906:600": "yadīcchase jīvitumadya nātha ||",
  "SA21n2906:607": "tvaṃ vajrakāma samayāgra mahāhitārtha",
  "SA21n2906:611": "sambuddhavaṃśatilaka samatānukampī",
  "SA21n2906:615": "kāmāhi māṃ gunanidhiṃ bahuratnabhūtāṃ",
  "SA21n2906:619": "yadīcchase jīvitumadya nātha ||",
  "SA21n2906:626": "paramārthapraviṣṭasya sañcodanā ||",
  "SA21n2906:633": "akṣobhyavajra mahājñāna vajradhātu mahābudha |",
  "SA21n2906:637": "trimaṇḍala trivajrāgri bhāṣa guhyaṃ namo'stu",
  "SA21n2906:638": "te ||",
  "SA21n2906:645": "vairocana mahāśuddha vajraśānta mahārate |",
  "SA21n2906:649": "prakṛtiprabhāsvarāndharmāndeśa vajra namo'stu",
  "SA21n2906:650": "te || ( 7 )",
  "SA21n2906:663": "ratnarāja sugāmbhīrya khavajrākāśanirmala |",
  "SA21n2906:667": "svabhāvaśuddha nirlepa bhāṣa guhyaṃ namo'stu",
  "SA21n2906:668": "te ||",
  "SA21n2906:675": "vajrāmita mahārāja nirvikalpa khavajriṇaḥ |",
  "SA21n2906:679": "rāgapāramitāprāpta bhāṣa vajra namo'stu te ||",
  "SA21n2906:686": "amoghavajra sambuddha sarvāśāparipūraka |",
  "SA21n2906:690": "śuddhasvabhāvasambhūta vajrasatva namo'stu te ||",
  "SA21n2906:697": "pūvapraṇidhānavaśādvyutthitasya stutikaraṇam ||",
  "SA21n2906:700": "hūṃ ||",
  "SA21n2906:701": "anena mantropasaṃhāraḥ ||",
  "SA21n2906:708": "iti śrīguhyasamājamahāyogatantre",
  "SA21n2906:709": "bhavotpattikramasādhanasya mantroddhāraḥ",
  "SA21n2906:713": "samāptaḥ ||",
  "SA21n2906:714": "kṛtiriyaṃ candrakīrtipādānām || || ( 8 )"
}