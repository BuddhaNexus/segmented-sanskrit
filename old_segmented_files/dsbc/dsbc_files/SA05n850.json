{
  "SA05n850:0": "mahācakravartināmāṣṭottaraśatastotram",
  "SA05n850:1": "vajrasattva mahāvajra vajranātha susādhaka |",
  "SA05n850:2": "vajrābhiṣeka vajrābha vajraketu (to) namo'stu te || 1 ||",
  "SA05n850:3": "hāsavajra mahādharma vajrakośa mahāvara |",
  "SA05n850:4": "sarvamaṇḍalarājāgrya niṣprapañca namo'stu te || 2 ||",
  "SA05n850:5": "vajrakarma mahārakṣa caṇḍayakṣa mahāgraha |",
  "SA05n850:6": "vajramuṣṭi mahāmudra sarvamudra namo'stu te || 3 ||",
  "SA05n850:7": "bodhicitta mahābodhe buddha sarvatathāgata |",
  "SA05n850:8": "vajrayāna mahājñāna mahāyāna namo'stu te || 4 ||",
  "SA05n850:9": "sarvārtha sarvatattvārtha mahāsattvārtha sarvavit |",
  "SA05n850:10": "sarvajña sarvakṛt sarva sarvadarśi namo'stu te || 5 ||",
  "SA05n850:11": "vajrātmaka suvajrāgrya vajravīrya suvajradhṛk |",
  "SA05n850:12": "mahāsamaya tattvārtha mahāsatya namo'stu te || 6 ||",
  "SA05n850:13": "vajrāṅkuśa mahākāma surate sumahāprabha |",
  "SA05n850:14": "vajraprabha prabhodyota buddhaprabha namo'stu te || 7 ||",
  "SA05n850:15": "vajrarājāgrya vajrāgrya vidyāgryāgrya narottama |",
  "SA05n850:16": "vajrottama mahāgryāgrya vidyottama namo'stu te || 8 ||",
  "SA05n850:17": "vajradhāto mahāguhya vajraguhya suguhyadhṛk |",
  "SA05n850:18": "vajrasūkṣma mahādhyāna vajrakārya namo'stu te || 9 ||",
  "SA05n850:19": "buddhāgrya buddhavajrāgrya buddhabodhe mahābudha |",
  "SA05n850:20": "buddhajñāna mahābuddha buddhabuddha namo'stu te || 10 ||",
  "SA05n850:21": "buddhapūjā-mahāpūjā-sattvapūjāsupūjaka |",
  "SA05n850:22": "mahopāya mahāsiddhe vajrasiddhi namo'stu te || 11 ||",
  "SA05n850:23": "tathāgata mahākāya tathāgatasarasvate |",
  "SA05n850:24": "tathāgatamahācitta vajracitta namo'stu te || 12 ||",
  "SA05n850:25": "buddhādhipa jinājñākṛd buddhamitra jināgraja |",
  "SA05n850:26": "mahāvairocana vibho śāntaraudra namo'stu te || 13 ||",
  "SA05n850:27": "tathāgatamahātattva bhūtakoṭe mahānaya |",
  "SA05n850:28": "sarvapāramitājñāna paramārtha namo'stu te || 14 ||",
  "SA05n850:29": "samantabhadra caryāgrya māra mārapramadarka |",
  "SA05n850:30": "sarvāgrya samatājñāna sarvatraga namo'stu te || 15 ||",
  "SA05n850:31": "buddhahuṃkara huṃkāra vajrahuṃkara dāmaka |",
  "SA05n850:32": "viśvavajrāḍga vajrogra vajrapāṇe namo'stu te || 16 ||",
  "SA05n850:33": "vandayaḥ pūjyaśca mānyaśca satkartavyastathāgataiḥ |",
  "SA05n850:34": "yasmād vajradṛḍhaṃ cittaṃ vajrasattvastvamucyase || 17 ||",
  "SA05n850:35": "tvadadhīnā hi saṃbodhiḥ pitā tvaṃ sarvadarśinām |",
  "SA05n850:36": "saṃbhūtāḥ saṃbhaviṣyanti tvāmāsādya tathāgatāḥ || 18 ||",
  "SA05n850:37": "anena stotrarājena yaḥ stuyādbai subhaktitaḥ |",
  "SA05n850:38": "yo gāyaṃstu stuyāt so'pi bhavedvajradharopamaḥ || 19 ||",
  "SA05n850:39": "adhyeṣayāmastvāṃ nātha sarvabuddhavaśaṃkaram |",
  "SA05n850:40": "sarvasattvārthakāryārthamutpādaya svakaṃ kulam || 20 ||",
  "SA05n850:41": "mahācakravartināmāṣṭottaraśatādhyeṣaṇāstotraṃ sampūrṇam |"
}