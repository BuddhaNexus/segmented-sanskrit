{
  "SA07n957:0": "yaśodharācaritam",
  "SA07n957:1": "śrī siddhārthaḥ kapilanagare bodhisattvaḥ saputrāṃ",
  "SA07n957:2": "devīṃ tyaktvā sakalavibhavaṃ cakravartiśriyaṃ ca |",
  "SA07n957:3": "māsy āṣāḍhe viratamanasā pūrṇimāyāṃ niśīthe",
  "SA07n957:4": "niścakrāma śramaṇapadabhṛn mokṣam anveṣṭukāmaḥ ||1 ||",
  "SA07n957:5": "atha prabhāte śayanāt samutthitā",
  "SA07n957:6": "sutena sārdhaṃ mahiṣī yaśodharā |",
  "SA07n957:7": "didṛkṣayā svāmivarasya satvaraṃ",
  "SA07n957:8": "gatāvidūre śayanīyamandiram ||2 ||",
  "SA07n957:9": "yathā pure vañcayituṃ sa me patī",
  "SA07n957:10": "rahogataḥ kutra cid eva gūḍhavān |",
  "SA07n957:11": "vicintya saudhe 'ntarabāhiraṃ bhṛśaṃ",
  "SA07n957:12": "parīkṣyamāṇāpi dadarśa naiva tam ||3 ||",
  "SA07n957:13": "dadhāva tasmāt sacivasya mandiraṃ",
  "SA07n957:14": "gavākṣam udghāṭya drutaṃ drutaṃ śucā |",
  "SA07n957:15": "kapāṭam āhatya dṛḍhaṃ muhur muhur",
  "SA07n957:16": "vyarīravac channa bhavan bhavann iti ||4 ||",
  "SA07n957:17": "apekṣya kiṃ cit kvaṇam antarād gṛhe",
  "SA07n957:18": "vyatiṣṭhatālpaṃ pratihārasannidhau |",
  "SA07n957:19": "vicārabhaṅgāc chvasatī ca pāṇinā",
  "SA07n957:20": "pratāḍayām āsa kapolayugmakam ||5 ||",
  "SA07n957:21": "tato gatā sā nṛpamandurālayaṃ",
  "SA07n957:22": "turaṅgamaṃ nātra dadarśa kanthakam |",
  "SA07n957:23": "kuto yayau kiṃ rahasā sa vallabho",
  "SA07n957:24": "vitarkayantīti babhūva mūrchitā ||6 ||",
  "SA07n957:25": "vicintya yat kiṃ cid itas tataḥ śiraś",
  "SA07n957:26": "cacāla jaghrau ca mukhe sutasya sā |",
  "SA07n957:27": "bhujātapatreṇa vilocanadvayān",
  "SA07n957:28": "nyavārayat sā sravadaśruśīkaram ||7 ||",
  "SA07n957:29": "aśaknuvantī nitarāṃ samudgamāṃ",
  "SA07n957:30": "manovyathāṃ soḍhum udagramanyunā |",
  "SA07n957:31": "patipradattaṃ maṇikaṇṭhabhūṣaṇaṃ",
  "SA07n957:32": "pravālamālām api kuṇḍaladvayam ||8 ||",
  "SA07n957:33": "lalāṭikāṃ hemamayāṅgulīyakaṃ",
  "SA07n957:34": "hiraṇyasūtreṇa nibaddhamekhalām |",
  "SA07n957:35": "vimucya śīrṣābharaṇaṃ ca kaṅkaṇe",
  "SA07n957:36": "sasarja dhig dhig vadatī sasambhramam ||9 ||",
  "SA07n957:37": "atītaḍat pādatalena bhūtalaṃ",
  "SA07n957:38": "jajṛmbha ūrdhvaṃ vicakarṣa mūrdhajam |",
  "SA07n957:39": "jajalpa vākyaṃ vigatārtham ākulaṃ",
  "SA07n957:40": "rurāva bhīteva ruroda gadgadam ||10 ||",
  "SA07n957:41": "niveśya bālaṃ śayane punaḥ punaḥ",
  "SA07n957:42": "samutkṣipantī yugapat karadvayam |",
  "SA07n957:43": "vikampya śīrṣaṃ ca yathā vicetanā",
  "SA07n957:44": "jughoṣa śaśvāsa papāta vivyathe ||11 ||",
  "SA07n957:45": "nipīḍyamānāpi bubhukṣayāniśaṃ",
  "SA07n957:46": "na bhojanaṃ bhoktum iyeṣa kiṃ cana |",
  "SA07n957:47": "tṛṣāturā nodakabindum apy asau",
  "SA07n957:48": "papau ca kāye 'py babhūva vepathuḥ ||12 ||",
  "SA07n957:49": "nihanyate dhīsmṛtiśaktidhīratā",
  "SA07n957:50": "śarīravarṇaṃ balam indriyeṣv api |",
  "SA07n957:51": "vinaśyate jīvam anukrameṇa ca",
  "SA07n957:52": "durantateyaṃ priyaviprayogatā ||13 ||",
  "SA07n957:53": "niṣadya bhūmyāṃ vinatārdhavigrahā",
  "SA07n957:54": "śiraś ca pāṇidvayam aṅkamastake |",
  "SA07n957:55": "niveśya kiṃ cit pariṇamya kaṃdharaṃ",
  "SA07n957:56": "mamajja cintājaladhāv apāśraye ||14 ||",
  "SA07n957:57": "yaśodharāyā avamānanakriyā",
  "SA07n957:58": "asahya siddhārthakumāra ekakaḥ |",
  "SA07n957:59": "nivāsam utsṛjya gato nu kānanam",
  "SA07n957:60": "iti pravādo 'pi bhaved aho mama ||15 ||",
  "SA07n957:61": "yad asti kāryaṃ triṣu mandireṣu tac",
  "SA07n957:62": "cakāra kārya- kṣamasevikā yathā |",
  "SA07n957:63": "gatau sthitau vā śayane ca vipriyaṃ",
  "SA07n957:64": "kadā canāhaṃ na cakāra kiṃ cana || 16 ||",
  "SA07n957:65": "vicintayantī sahasāgatāpadaṃ",
  "SA07n957:66": "pragamya devāyatanaṃ priyaṃ prati |",
  "SA07n957:67": "sugandhipuspair api dhūmadīpakair",
  "SA07n957:68": "apūpujad devagaṇaṃ sagauravam ||17 ||",
  "SA07n957:69": "bhujadvayaṃ mūrdhni niveśya śokinī",
  "SA07n957:70": "vilokya devapratimānanaśriyam |",
  "SA07n957:71": "praṇamya bhaktyā pariśuddhacetasā",
  "SA07n957:72": "yayāca devān iti viprayogataḥ ||18 ||",
  "SA07n957:73": "trilokasargasthitināśahetavaḥ",
  "SA07n957:74": "caturmukhaśrīpaticandraśekharāḥ |",
  "SA07n957:75": "mahānubhāvā jagadīśvarāḥ surāḥ",
  "SA07n957:76": "suduḥkhitāyai śaraṇaṃ bhavantu me ||19 ||",
  "SA07n957:77": "vidhāya yācñām iti devahastayor",
  "SA07n957:78": "upāyanīkṛtya babandha kārṣikau |",
  "SA07n957:79": "upāharan miṣṭanavāmbupāyasaṃ",
  "SA07n957:80": "sitāṃśukaṃ svarṇamayīṃ ca putrikām ||20 ||",
  "SA07n957:81": "pramodam āpādayituṃ sureśvarāṃś",
  "SA07n957:82": "cakāra ghaṇṭāninadaṃ ca bhūsurān |",
  "SA07n957:83": "ajījapad devagirā ca saṃstavān",
  "SA07n957:84": "nanāma bhūmāv asakṛt nipatya sā ||21 ||",
  "SA07n957:85": "pure vane saṃvasathe 'pi vallabho",
  "SA07n957:86": "vased dhi kasminn iti divyācakṣuṣā |",
  "SA07n957:87": "vilokya gehaṃ vinivartayantu taṃ",
  "SA07n957:88": "divaukasaḥ prārthayataiva sā punaḥ ||22 ||",
  "SA07n957:89": "nirīkṣya jihmānimiṣeṇa cakṣuṣā",
  "SA07n957:90": "nihatya gāḍhaṃ caraṇaṃ bhuvas tale |",
  "SA07n957:91": "muhur muhur daṃśitakomalādharā",
  "SA07n957:92": "prakarṣam utkṣipya vikampya tarjanīm ||23 ||",
  "SA07n957:93": "are-tvayāryasya gṛhābhiniṣkramaḥ",
  "SA07n957:94": "śruto na dṛṣṭaḥ vada kiṃ nirākulam |",
  "SA07n957:95": "iti pratīhārabhaṭaṃ ruṣoccakai",
  "SA07n957:96": "raveṇa papraccha sabāṣpalocanā ||24 ||",
  "SA07n957:97": "bhavān sa ārye nṛpavaṃśaśekharo",
  "SA07n957:98": "mayā na dṛṣṭaḥ pratihāram āgataḥ |",
  "SA07n957:99": "varāṅganābhiḥ saha kelikānane",
  "SA07n957:100": "gate niśīthe 'ramateti me śrutam ||25 ||",
  "SA07n957:101": "avītarāgo nanu rājanandano",
  "SA07n957:102": "vavāñcha tasmān nanu nūtanapriyām |",
  "SA07n957:103": "mithaḥ sa kāṃ cit pariṇīya nāṭikāṃ",
  "SA07n957:104": "bahir gato 'ddheti vitarkayāmy aham ||26 ||",
  "SA07n957:105": "purā hi mandhātv-abhidho mahāyaśāḥ",
  "SA07n957:106": "sa sārvabhaumo 'pi surāṅganāgaṇe |",
  "SA07n957:107": "kṛtānurāgo parivarjya mānuṣīṃ",
  "SA07n957:108": "śriyaṃ prapede nu divaukasāṃ puram ||27 ||",
  "SA07n957:109": "mano-'bhirāmaṃ surasundarīgaṇaṃ",
  "SA07n957:110": "vihāya vindhyā-vanatāpasāśrame |",
  "SA07n957:111": "agastipatnīṃ parirabhya tāpasīṃ",
  "SA07n957:112": "lalāsa rantuṃ niśi pākaśāsanaḥ ||28 ||",
  "SA07n957:113": "pratīta-laṅkāvijite 'grabhūpatir",
  "SA07n957:114": "daśānano daṇḍakakānanaṃ gataḥ |",
  "SA07n957:115": "vigṛhya sītāṃ janakātmajām api",
  "SA07n957:116": "nijapriyāvad vyadadhāt tadātmasāt ||29 ||",
  "SA07n957:117": "maheśvaraś cāpi purā tapaś carann",
  "SA07n957:118": "umāmahiṣyā saha kalikānane |",
  "SA07n957:119": "apāsya sātatyasamādhibhāvanaṃ",
  "SA07n957:120": "vyarīramac cājanayat sutau nanu ||30 ||",
  "SA07n957:121": "śucākulāṃ sāntvayituṃ vadhūttamām",
  "SA07n957:122": "iti pratīhāra uraḥ-sthale 'ñjalim |",
  "SA07n957:123": "vidhāya valgudhvaninānukampayā",
  "SA07n957:124": "natena mūrdhnā vacasā vyajijñapat ||31 ||",
  "SA07n957:125": "are-tvam etarhi bhavantam uttamaṃ",
  "SA07n957:126": "gṛhe bahir vopavane 'pi kutra cit |",
  "SA07n957:127": "aharmukhe kiṃ niśi vā dadarśitha",
  "SA07n957:128": "vyapṛcchad itthaṃ nijasevikāṃ ruṣā ||32 ||",
  "SA07n957:129": "nidhāya vāmetarajānumaṇḍalaṃ",
  "SA07n957:130": "kṣitau bhujau cāpi lalāṭamastake |",
  "SA07n957:131": "natārdhakāyaṃ nijagāda sevikā",
  "SA07n957:132": "śrutaṃ ca dṛṣṭaṃ na na vedmi kiṃ cana ||33 ||",
  "SA07n957:133": "ataḥ-paraṃ harmyam upeyuṣī satī",
  "SA07n957:134": "pramārjya nisyandajalaṃ vilocane |",
  "SA07n957:135": "are-kim āryo 'tra samāgato na vā",
  "SA07n957:136": "vyapṛcchad antaḥpurapālapaṇḍakam ||34 ||",
  "SA07n957:137": "praśasyarūpeṇa girā ca valgunā",
  "SA07n957:138": "śriyā 'pi dhṛtyā tava kakṣam āgatāḥ |",
  "SA07n957:139": "mahottame sarvajanena mānitā",
  "SA07n957:140": "bhavanti tasya tritayāḥ priyāṅganāḥ ||35 ||",
  "SA07n957:141": "mano-'bhirāmā bhavatī ca bhāratī",
  "SA07n957:142": "tathaiva lakṣmīr iti tāḥ priyāṅganāḥ |",
  "SA07n957:143": "sadaiva tābhī ramate kumārakaḥ",
  "SA07n957:144": "kadā cid anyatra mano 'sya no rajet ||36 ||",
  "SA07n957:145": "jugupsite satpuruṣair manasvibhiḥ",
  "SA07n957:146": "sadoṣakāme vimukho nu te patiḥ |",
  "SA07n957:147": "tato 'sya śuddhāntagatiḥ kadā cana",
  "SA07n957:148": "śrutā na dṛṣṭā na divā vā niśi ||37 ||",
  "SA07n957:149": "tapodhanānāṃ samatām upeyivān",
  "SA07n957:150": "ratiṃ na kuryāt sa bhavatraye kva cit |",
  "SA07n957:151": "amedhyagehena same 'varodhane",
  "SA07n957:152": "kathaṃ vidhatte ratim eṣa te patiḥ ||38 ||",
  "SA07n957:153": "asādhyarogāyatane sukhetare",
  "SA07n957:154": "bubhukṣayā nityanipīḍitodare |",
  "SA07n957:155": "atarpaṇīye vividhānnapānakaiḥ",
  "SA07n957:156": "spṛhāṃ na dehe prakaroti paṇḍitaḥ ||39 ||",
  "SA07n957:157": "vikīrṇagharmodakavipruṣi tvaci",
  "SA07n957:158": "vicitravarṇaṃ śamalena saṃskṛte |",
  "SA07n957:159": "śarīra ālokya jano vinaśyate",
  "SA07n957:160": "pataṅgavad dīpaśikhojjvalaprabhām ||40 ||",
  "SA07n957:161": "tato nṛpāntaḥ-purapālakodite",
  "SA07n957:162": "kṛtāvadhānā vacane yaśodharā |",
  "SA07n957:163": "divaukasāṃ nandanakānanopamaṃ",
  "SA07n957:164": "jagāma rājopavanaṃ calātmanā ||41 ||",
  "SA07n957:165": "athābhirāmopavanasya rakṣakaḥ",
  "SA07n957:166": "puraḥ pragamyorasi baddhapāṇinā |",
  "SA07n957:167": "kimartham ārye 'tra samāgatis tava",
  "SA07n957:168": "bhavāmi jijñāsur iti nyavedayat ||42 ||",
  "SA07n957:169": "sakhe mamāryo rahasāruṇodaye",
  "SA07n957:170": "samāgato vātra na kiṃ samāgataḥ |",
  "SA07n957:171": "kim atra dṛṣṭaḥ sa na vā śrutas tvayā",
  "SA07n957:172": "vicintya samyag vada māṃ yathātatham ||43 ||",
  "SA07n957:173": "gataspṛhaḥ pañcasu kāmavastuṣu",
  "SA07n957:174": "sa āryaputro vijitendriyo bhavet |",
  "SA07n957:175": "tato 'bhirāmopavanaṃ samāgamo",
  "SA07n957:176": "na dṛṣṭa ārye na hi vā śruto mayā ||44 ||",
  "SA07n957:177": "vidhitsamāno 'bhyudayaṃ jagattraye",
  "SA07n957:178": "divaukasānām adhigamya yācanam |",
  "SA07n957:179": "divo 'vatīrṇo nanu puṇyatejasā",
  "SA07n957:180": "manuṣyajanmany ajaniṣṭa sa prabhuḥ ||45 ||",
  "SA07n957:181": "mahāmahe saty asitarṣir īyivān",
  "SA07n957:182": "divaṃ kim ity asya vimṛśya kāraṇam |",
  "SA07n957:183": "svamitra-śuddhodanabhūpateḥ suto",
  "SA07n957:184": "'janīti harṣāt tam avekṣituṃ yayau ||46 ||",
  "SA07n957:185": "tato 'sitarṣir nṛpasaudham āgataḥ",
  "SA07n957:186": "kumārakaṃ vīkṣya sapuṇyasampadam |",
  "SA07n957:187": "atīndriyajñānamayena cakṣuṣā",
  "SA07n957:188": "parīkṣamāṇo 'sya śarīralakṣaṇam ||47 ||",
  "SA07n957:189": "jagāda vākyaṃ śiśur eṣa puṇyavān",
  "SA07n957:190": "bhaved dhi buddho hata-mārabandhanaḥ |",
  "SA07n957:191": "pratārayet sarvanarāmarāsurān",
  "SA07n957:192": "apārasaṃsāramahārṇavād iti ||48 ||",
  "SA07n957:193": "dvijeṣu pañcasv atha dehalakṣaṇaṃ",
  "SA07n957:194": "parīkṣya kauṇḍaṇyabudho 'bravīd iti |",
  "SA07n957:195": "vinaśya tṛṣṇādimalāny ayaṃ śiśur",
  "SA07n957:196": "anuttaraṃ buddhapadaṃ gamiṣyati ||49 ||",
  "SA07n957:197": "tadā prasūtakṣaṇa eva lumbinī-",
  "SA07n957:198": "vane sa saptāmbujamūrdhny abhivrajan |",
  "SA07n957:199": "abhītanādaṃ nyanadaj jagattraye",
  "SA07n957:200": "bhaveyam agras tv iti siṃhapotavat ||50 ||",
  "SA07n957:201": "bhramaddvirephaśrutiramyanisvanaḥ",
  "SA07n957:202": "sugandhinaḥ puṣpaparāgarāśinā |",
  "SA07n957:203": "taraṃgiṇīśīkaramiśramāruto",
  "SA07n957:204": "vavau samantād vipine śanaiḥ tadā ||51 ||",
  "SA07n957:205": "mahātmanas tasya parārdhyajanmani",
  "SA07n957:206": "vasuṃdharāyā nidhayaḥ samudgatāḥ |",
  "SA07n957:207": "dharāṅganā tarhy atimātramoditā",
  "SA07n957:208": "savismayāṃ siddhim adarśayad bhuvi ||52 ||",
  "SA07n957:209": "tataḥ paraṃ lumbinikānanād gṛhaṃ",
  "SA07n957:210": "vicitrajāmbūnadabimbasaṃnibham |",
  "SA07n957:211": "kumārakaṃ tau pitarau savatsalau",
  "SA07n957:212": "sabandhuvargaṃ parivārya ninyatuḥ ||53 ||",
  "SA07n957:213": "gurupradiṣṭaṃ vidhivad gurupriyaḥ",
  "SA07n957:214": "samastavidyāsamayaṃ ca darśanam |",
  "SA07n957:215": "bhave bhave saṃcitapuṇyatejasā",
  "SA07n957:216": "samadhyagīṣṭāciram eṣa buddhimā ||54 ||",
  "SA07n957:217": "śrutena dhṛtyā navayauvanaśriyam",
  "SA07n957:218": "upeyuṣo 'syārya-sutasya janmanaḥ |",
  "SA07n957:219": "saha tvayā ṣoḍaśame hi hāyane",
  "SA07n957:220": "vivāhadīkṣāṃ vidhivac cakāra nu ||55 ||"
}