{
  "SA05n897:0": "vāgīśvaravarṇanāstotram",
  "SA05n897:1": "brahmādidevamanujāsurapūjitāṅgaṃ",
  "SA05n897:2": "jñānādisarvanilayaṃ guṇarājavantam |",
  "SA05n897:3": "jñānādhipaṃ guṇamayaṃ guṇavṛddhimantaṃ",
  "SA05n897:4": "vāgīśvaraṃ suraguruṃ satataṃ namāmi || 1 ||",
  "SA05n897:5": "vedādiśāstraracanākhilamantravijñaṃ",
  "SA05n897:6": "stotraiḥ kathādibhiraśeṣasugītaśabdam |",
  "SA05n897:7": "yaṃ kīryayanti munayo naravāṇyabhijñaṃ",
  "SA05n897:8": "vāgīśvaraṃ suraguruṃ satataṃ namāmi || 2 ||",
  "SA05n897:9": "jñānapradhānakaśarīramacintyabuddhiṃ",
  "SA05n897:10": "vācaspatiṃ divi bhuvi stutakīrtidaṃ tam |",
  "SA05n897:11": "jñāneśvaraṃ tribhuvaneśacarācaraṃ taṃ",
  "SA05n897:12": "vāgīśvaraṃ suraguruṃ satataṃ namāmi || 3 ||",
  "SA05n897:13": "ratnādiśilpaparikalpanapūrṇajñeyaṃ",
  "SA05n897:14": "citraṃ vicitritaguṇaṃ janamānanīyam |",
  "SA05n897:15": "sarvajñakārakadharād hṛdi brahmapuñjaṃ",
  "SA05n897:16": "vāgīśvaraṃ suraguruṃ satataṃ namāmi || 4 ||",
  "SA05n897:17": "caryāvidhau ratipatiṃ sthiradhairyabodhiṃ",
  "SA05n897:18": "dhyānādhipaṃ vividhinā sukharañjanīyam |",
  "SA05n897:19": "vidyāpratiṣṭhitaguruṃ bhuvanetipūrṇaṃ",
  "SA05n897:20": "vāgīśvaraṃ suraguruṃ satataṃ namāmi || 5 ||",
  "SA05n897:21": "vāṇīpatiṃ bhujacatuṣṭayabāṇacāpaṃ",
  "SA05n897:22": "pustaṃ kṛpāṇamaniśaṃ kramaśo dadhānam |",
  "SA05n897:23": "sarveṣṭadaṃ jagati yaccaṇāravindaṃ",
  "SA05n897:24": "vāgīśvaraṃ suraguruṃ satataṃ namāmi || 6 ||",
  "SA05n897:25": "śrīvāgīśvaravarṇanāstotraṃ samāptam |"
}